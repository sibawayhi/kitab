<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="317">
   <verses id="٦٥٩٥١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنّ لَهَا مُرْكَّنًا إرْزَبًّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنّ</ar>
               </t>
               <t>
                  <ar>لَهَا</ar>
               </t>
               <t>
                  <ar>مُرْكَّنًا</ar>
               </t>
               <t>
                  <ar>إرْزَبًّا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَأَنّهُ جَبْهَةُ ذَرَّى حَبّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَأَنّهُ</ar>
               </t>
               <t>
                  <ar>جَبْهَةُ</ar>
               </t>
               <t>
                  <ar>ذَرَّى</ar>
               </t>
               <t>
                  <ar>حَبّا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٥٧٨٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>كَذَبْتُمْ وَبَيْتِ اللَّهِ لَا تَنْكِحْوْنَهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَذَبْتُمْ</ar>
               </t>
               <t>
                  <ar>وَبَيْتِ</ar>
               </t>
               <t>
                  <ar>اللَّهِ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَنْكِحْوْنَهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بَنِيِ شَاْبَ قَرْنَاْهَا تَصُرُّ وَتَحْلُبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بَنِيِ</ar>
               </t>
               <t>
                  <ar>شَاْبَ</ar>
               </t>
               <t>
                  <ar>قَرْنَاْهَا</ar>
               </t>
               <t>
                  <ar>تَصُرُّ</ar>
               </t>
               <t>
                  <ar>وَتَحْلُبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٧١٢٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَجَدْنَا فِي كِتَاْبِ بَنِي تَمِيْمٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَجَدْنَا</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>كِتَاْبِ</ar>
               </t>
               <t>
                  <ar>بَنِي</ar>
               </t>
               <t>
                  <ar>تَمِيْمٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَحَقُّ الْخَيْلِ بِاْلرَّكْضِ الْمُعَاْرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَحَقُّ</ar>
               </t>
               <t>
                  <ar>الْخَيْلِ</ar>
               </t>
               <t>
                  <ar>بِاْلرَّكْضِ</ar>
               </t>
               <t>
                  <ar>الْمُعَاْرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٧٥٢٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَقَدْ كَذَبَتْك نَفْسُكَ فَاْكْذِبَنْهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَقَدْ</ar>
               </t>
               <t>
                  <ar>كَذَبَتْك</ar>
               </t>
               <t>
                  <ar>نَفْسُكَ</ar>
               </t>
               <t>
                  <ar>فَاْكْذِبَنْهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنْ جَزَعًا وَإِنْ إجْمَاْلَ صَبْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنْ</ar>
               </t>
               <t>
                  <ar>جَزَعًا</ar>
               </t>
               <t>
                  <ar>وَإِنْ</ar>
               </t>
               <t>
                  <ar>إجْمَاْلَ</ar>
               </t>
               <t>
                  <ar>صَبْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
