<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="281">
   <verses id="٧١٤٨١" poet="حَسَّاْنُ بْنُ ثَاْبِتٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>مَا أُبَاْلِي أَنَبَّ بِالْحَزْنِ تَيْسٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أُبَاْلِي</ar>
               </t>
               <t>
                  <ar>أَنَبَّ</ar>
               </t>
               <t>
                  <ar>بِالْحَزْنِ</ar>
               </t>
               <t>
                  <ar>تَيْسٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَمْ لَحَاْنِي بِظَهْرِ غَيْبٍ لَئِيْمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَمْ</ar>
               </t>
               <t>
                  <ar>لَحَاْنِي</ar>
               </t>
               <t>
                  <ar>بِظَهْرِ</ar>
               </t>
               <t>
                  <ar>غَيْبٍ</ar>
               </t>
               <t>
                  <ar>لَئِيْمُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٩٨٥٧" poet="صَفِيَّةُ بِنْتُ عَبْدِ الْمُطَّلِبِ">
      <verse>
         <hemistiche>
            <text>
               <ar>كَيْفَ رَأَيْتَ زَبْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَيْفَ</ar>
               </t>
               <t>
                  <ar>رَأَيْتَ</ar>
               </t>
               <t>
                  <ar>زَبْرَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَأَقِطَا أَوْ تَمْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَأَقِطَا</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>تَمْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>أَمْ قُرَشِيَّا صَقْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَمْ</ar>
               </t>
               <t>
                  <ar>قُرَشِيَّا</ar>
               </t>
               <t>
                  <ar>صَقْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٣٦٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَثَعْلَبَةَ الْفَوَاْرِسَ أَوْ رِيَاْحَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَثَعْلَبَةَ</ar>
               </t>
               <t>
                  <ar>الْفَوَاْرِسَ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>رِيَاْحَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَدَلْتَ بِهِمِ طُهَيَّةَ وَالْخِشَاْبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَدَلْتَ</ar>
               </t>
               <t>
                  <ar>بِهِمِ</ar>
               </t>
               <t>
                  <ar>طُهَيَّةَ</ar>
               </t>
               <t>
                  <ar>وَالْخِشَاْبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
