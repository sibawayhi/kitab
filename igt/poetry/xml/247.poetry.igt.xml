<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="247">
   <verses id="٨٠٤٥١" poet="الْأَعْشَى">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنَّ مَنْ لَاْمَ فِي بَنِي بِنْتِ حَسَّاْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>لَاْمَ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>بَنِي</ar>
               </t>
               <t>
                  <ar>بِنْتِ</ar>
               </t>
               <t>
                  <ar>حَسَّاْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>نَ أَلُمُهُ وَأَعْصِهُ فِي الْخُطُوْبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نَ</ar>
               </t>
               <t>
                  <ar>أَلُمُهُ</ar>
               </t>
               <t>
                  <ar>وَأَعْصِهُ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>الْخُطُوْبِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٩١٠٦" poet="أُمَيّةُ بْنُ أَبِي الصَّلْتِ">
      <verse>
         <hemistiche>
            <text>
               <ar>ولَكِنَّ مَنْ لَا يَلْقَ أَمْرًا يَنُوْبُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ولَكِنَّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>يَلْقَ</ar>
               </t>
               <t>
                  <ar>أَمْرًا</ar>
               </t>
               <t>
                  <ar>يَنُوْبُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِعُدَّتِهِ يَنْزِلْ بِهِ وَهْوَ أَعْزَلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِعُدَّتِهِ</ar>
               </t>
               <t>
                  <ar>يَنْزِلْ</ar>
               </t>
               <t>
                  <ar>بِهِ</ar>
               </t>
               <t>
                  <ar>وَهْوَ</ar>
               </t>
               <t>
                  <ar>أَعْزَلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٨٥٤٣" poet="الرَّاْعِي">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَوْ أَنَّ حُقَّ الْيَوْمَ مِنْكُمْ إِقَاْمَةٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَوْ</ar>
               </t>
               <t>
                  <ar>أَنَّ</ar>
               </t>
               <t>
                  <ar>حُقَّ</ar>
               </t>
               <t>
                  <ar>الْيَوْمَ</ar>
               </t>
               <t>
                  <ar>مِنْكُمْ</ar>
               </t>
               <t>
                  <ar>إِقَاْمَةٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَإِنْ كَاْنَ سَرْحٌ قَدْ مَضَى فَتَسَرَّعَا</ar>
               <free/>
            </text>
            <igt>
