   </verses>
   <verses id="١١٨٣٠" poet="الْأَعْشَى">
      <verse>
         <hemistiche>
            <text>
               <ar>فِي فِتْيَةٍ كَسُيُوْفِ الْهِنْدِ قَدْ عَلِمُوْا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>فِتْيَةٍ</ar>
               </t>
               <t>
                  <ar>كَسُيُوْفِ</ar>
               </t>
               <t>
                  <ar>الْهِنْدِ</ar>
