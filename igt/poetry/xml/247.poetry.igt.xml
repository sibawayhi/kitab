               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>يَحْفَى</ar>
               </t>
               <t>
                  <ar>وَيَنْتَعِلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
