   <verses id="٤٦٧١٣" nbr="1">
      <verse>
         <hemistiche>
            <text>
               <ar>فَأَمَّا تَمِيْمٌ تَمِيْمُ بِنُ مُرٍّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَمَّا</ar>
                  <en/>
               </t>
               <t>
                  <ar>تَمِيْمٌ</ar>
                  <en/>
               </t>
               <t>
                  <ar>تَمِيْمُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِنُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مُرٍّ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَأَلْفَاْهُمُ الْقَوْمُ رَوْبَى نِيَاْمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَلْفَاْهُمُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْقَوْمُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>رَوْبَى</ar>
                  <en/>
               </t>
               <t>
                  <ar>نِيَاْمَا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٨٧٢٩" nbr="2">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا ابْنُ أَبِي مُوْسَى بِلَاْلٌ بَلَغْتِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>ابْنُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>أَبِي</ar>
                  <en/>
               </t>
               <t>
                  <ar>مُوْسَى</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِلَاْلٌ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بَلَغْتِهِ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَقَاْمَ بِفَأْسٍ بَيْنَ وُصْلَيْكِ جَاْزِرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقَاْمَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِفَأْسٍ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بَيْنَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>وُصْلَيْكِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>جَاْزِرُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
