<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="057">
   <verses id="٥٠٣٧٨" poet="عَبَّاْسُ بْنُ مِرْدَاْسٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>أَبَا خُرَاْشَةَ أَمَّا أَنْتَ ذَا نَفَرٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَبَا</ar>
               </t>
               <t>
                  <ar>خُرَاْشَةَ</ar>
               </t>
               <t>
                  <ar>أَمَّا</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>نَفَرٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنَّ قَوْمِي لَمْ تَأْكُلْهُمُ الضَّبُعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنَّ</ar>
               </t>
               <t>
                  <ar>قَوْمِي</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>تَأْكُلْهُمُ</ar>
               </t>
               <t>
                  <ar>الضَّبُعُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٩١٦١" poet="طُفِيْلٌ الْغَنَوِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَبِالسَّهْبِ مَيْمُوْنُ النَّقِيْبَةِ قَوْلُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَبِالسَّهْبِ</ar>
               </t>
               <t>
                  <ar>مَيْمُوْنُ</ar>
               </t>
               <t>
                  <ar>النَّقِيْبَةِ</ar>
               </t>
               <t>
                  <ar>قَوْلُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لِمُلْتَمِسِ المَعْرُوْفِ أَهْلٌ وَمَرْحَبٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لِمُلْتَمِسِ</ar>
               </t>
               <t>
                  <ar>المَعْرُوْفِ</ar>
               </t>
               <t>
                  <ar>أَهْلٌ</ar>
               </t>
               <t>
                  <ar>وَمَرْحَبٌ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٥٣٣٨" poet="أَبُو الْأَسْوَدِ الدُّؤَلِيِّ">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا جِئْتَ بَوَّاْبًا لَهُ قَاْلَ مَرْحَبًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>جِئْتَ</ar>
               </t>
               <t>
                  <ar>بَوَّاْبًا</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>قَاْلَ</ar>
               </t>
               <t>
                  <ar>مَرْحَبًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَلَا مَرْحَبٌ وَاديْكَ غَيْرُ مَضِيْقِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَا</ar>
               </t>
               <t>
                  <ar>مَرْحَبٌ</ar>
               </t>
               <t>
                  <ar>وَاديْكَ</ar>
               </t>
               <t>
                  <ar>غَيْرُ</ar>
               </t>
               <t>
                  <ar>مَضِيْقِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
