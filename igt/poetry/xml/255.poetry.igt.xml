<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="255">
   <verses id="٩١٩٣٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَحَاْلِفْ فَلَا وَاللهِ تَهْبِطُ تَلْعَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَحَاْلِفْ</ar>
               </t>
               <t>
                  <ar>فَلَا</ar>
               </t>
               <t>
                  <ar>وَاللهِ</ar>
               </t>
               <t>
                  <ar>تَهْبِطُ</ar>
               </t>
               <t>
                  <ar>تَلْعَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مِنَ الْأَرْضِ إِلَّا أَنْتَ لِلذُّلِّ عَاْرِفُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>الْأَرْضِ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>لِلذُّلِّ</ar>
               </t>
               <t>
                  <ar>عَاْرِفُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣١٤٦٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَـأُقْسِمُ أَنْ لَوِ الْتَقَيْنَا وَأَنْتُمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَـأُقْسِمُ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>لَوِ</ar>
               </t>
               <t>
                  <ar>الْتَقَيْنَا</ar>
               </t>
               <t>
                  <ar>وَأَنْتُمُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَكَاْنَ لَكُمْ يَوْمٌ مِنْ الشَّرِّ مُظْلِمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَكَاْنَ</ar>
               </t>
               <t>
                  <ar>لَكُمْ</ar>
               </t>
               <t>
                  <ar>يَوْمٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>الشَّرِّ</ar>
               </t>
               <t>
                  <ar>مُظْلِمُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٦٢٧٥" poet="لَبِيْدٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَقَدْ عَلِمْتُ لَتَأْتِيَنَّ مَنِيَّتِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَقَدْ</ar>
               </t>
               <t>
                  <ar>عَلِمْتُ</ar>
               </t>
               <t>
                  <ar>لَتَأْتِيَنَّ</ar>
               </t>
               <t>
                  <ar>مَنِيَّتِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إِنَّ الْمَنَاْيَا لَا تَطِيْشُ سِهَاْمُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>الْمَنَاْيَا</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَطِيْشُ</ar>
               </t>
               <t>
                  <ar>سِهَاْمُهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
