<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="031">
   <verses id="٩٩٧٩٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَبِالْأَرَاْجِيْزِ يَا ابْنَ اللُّؤْمِ تُوْعِدُنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَبِالْأَرَاْجِيْزِ</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>ابْنَ</ar>
               </t>
               <t>
                  <ar>اللُّؤْمِ</ar>
               </t>
               <t>
                  <ar>تُوْعِدُنِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَفِي الْأَرَاْجِيْزِ خِلْتُ اللُّؤْمُ وَالْخَوَرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَفِي</ar>
               </t>
               <t>
                  <ar>الْأَرَاْجِيْزِ</ar>
               </t>
               <t>
                  <ar>خِلْتُ</ar>
               </t>
               <t>
                  <ar>اللُّؤْمُ</ar>
               </t>
               <t>
                  <ar>وَالْخَوَرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٨٤٣١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَإِنْ تَزْعُمِيْنِي كُنْتُ أَجْهَلُ فِيْكُمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنْ</ar>
               </t>
               <t>
                  <ar>تَزْعُمِيْنِي</ar>
               </t>
               <t>
                  <ar>كُنْتُ</ar>
               </t>
               <t>
                  <ar>أَجْهَلُ</ar>
               </t>
               <t>
                  <ar>فِيْكُمُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنَّى شَرَيْتُ الْحِلْمَ بَعْدَكِ بِالْجَهْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنَّى</ar>
               </t>
               <t>
                  <ar>شَرَيْتُ</ar>
               </t>
               <t>
                  <ar>الْحِلْمَ</ar>
               </t>
               <t>
                  <ar>بَعْدَكِ</ar>
               </t>
               <t>
                  <ar>بِالْجَهْلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٩٩٢٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَدَدْتَ قُشَيْرًا إِذْ عَدَدْتَ فَلَمْ أُسَأْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَدَدْتَ</ar>
               </t>
               <t>
                  <ar>قُشَيْرًا</ar>
               </t>
               <t>
                  <ar>إِذْ</ar>
               </t>
               <t>
                  <ar>عَدَدْتَ</ar>
               </t>
               <t>
                  <ar>فَلَمْ</ar>
               </t>
               <t>
                  <ar>أُسَأْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِذَاْكَ وَلَمْ أَزْعُمْكَ عَنْ ذَاْكَ مَعْزِلَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِذَاْكَ</ar>
               </t>
               <t>
                  <ar>وَلَمْ</ar>
               </t>
               <t>
                  <ar>أَزْعُمْكَ</ar>
               </t>
               <t>
                  <ar>عَنْ</ar>
               </t>
               <t>
                  <ar>ذَاْكَ</ar>
               </t>
               <t>
                  <ar>مَعْزِلَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٣٢٨٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَجُهَّاْلًا تَقُوْلُ بَنِي لُؤَيٍّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَجُهَّاْلًا</ar>
               </t>
               <t>
                  <ar>تَقُوْلُ</ar>
               </t>
               <t>
                  <ar>بَنِي</ar>
               </t>
               <t>
                  <ar>لُؤَيٍّ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَعَمْرُ أَبِيْكَ أَمْ مُتَجَاْهِلِيْنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَعَمْرُ</ar>
               </t>
               <t>
                  <ar>أَبِيْكَ</ar>
               </t>
               <t>
                  <ar>أَمْ</ar>
               </t>
               <t>
                  <ar>مُتَجَاْهِلِيْنَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٩١٢٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَمَّا الرَّحِيْلُ فَدُوْنَ بَعْدِ غَدٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَمَّا</ar>
               </t>
               <t>
                  <ar>الرَّحِيْلُ</ar>
               </t>
               <t>
                  <ar>فَدُوْنَ</ar>
               </t>
               <t>
                  <ar>بَعْدِ</ar>
               </t>
               <t>
                  <ar>غَدٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَمَتَى تَقُوْلُ الدَّاْرَ تَجْمَعُنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَمَتَى</ar>
               </t>
               <t>
                  <ar>تَقُوْلُ</ar>
               </t>
               <t>
                  <ar>الدَّاْرَ</ar>
               </t>
               <t>
                  <ar>تَجْمَعُنَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
