<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="035">
   <verses id="٤٤٠٦٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَذَكَرَتْ تَقْتُدَ بَرْدَ مَاْئِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَذَكَرَتْ</ar>
               </t>
               <t>
                  <ar>تَقْتُدَ</ar>
               </t>
               <t>
                  <ar>بَرْدَ</ar>
               </t>
               <t>
                  <ar>مَاْئِهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَعَتَكُ الْبَوْلِ عَلَى أَنْسَاْئِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَعَتَكُ</ar>
               </t>
               <t>
                  <ar>الْبَوْلِ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>أَنْسَاْئِهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٠٠٢٢" poet="عَبْدَةُ بْنُ الطَّبِيْبِ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَمَا كَانَ قَيْسٌ هُلْكُهُ هُلْكَ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَمَا</ar>
               </t>
               <t>
                  <ar>كَانَ</ar>
               </t>
               <t>
                  <ar>قَيْسٌ</ar>
               </t>
               <t>
                  <ar>هُلْكُهُ</ar>
               </t>
               <t>
                  <ar>هُلْكَ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَاْحِدٍ وَلَكِنَّهُ بُنْيَانُ قَوْمٍ تَهَدَّمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَاْحِدٍ</ar>
               </t>
               <t>
                  <ar>وَلَكِنَّهُ</ar>
               </t>
               <t>
                  <ar>بُنْيَانُ</ar>
               </t>
               <t>
                  <ar>قَوْمٍ</ar>
               </t>
               <t>
                  <ar>تَهَدَّمَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٩٣٦٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>ذَرِيْنِي إِنَّ أَمْرَكِ لَنْ يُطَاْعَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ذَرِيْنِي</ar>
               </t>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>أَمْرَكِ</ar>
               </t>
               <t>
                  <ar>لَنْ</ar>
               </t>
               <t>
                  <ar>يُطَاْعَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَمَا أَلْفَيْتِنِي حِلْمِي مُضَاْعَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>أَلْفَيْتِنِي</ar>
               </t>
               <t>
                  <ar>حِلْمِي</ar>
               </t>
               <t>
                  <ar>مُضَاْعَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٨٤١٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنَّ عَلِيَّ اللهَ أَنْ تُبَايِعَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>عَلِيَّ</ar>
               </t>
               <t>
                  <ar>اللهَ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>تُبَايِعَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تُؤْخَذَ كَرهًا أَوْ تَجِيْءَ طَاْئِعَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تُؤْخَذَ</ar>
               </t>
               <t>
                  <ar>كَرهًا</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>تَجِيْءَ</ar>
               </t>
               <t>
                  <ar>طَاْئِعَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
