<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="081">
   <verses id="٦٦٣٨٢" poet="حَاْتِمُ بْنُ عَبْدِ اللهِ الطَاْئِىُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَأَغْفِرُ عَوْرَاْءَ الكريْمِ ادَّخَاْرَهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأَغْفِرُ</ar>
               </t>
               <t>
                  <ar>عَوْرَاْءَ</ar>
               </t>
               <t>
                  <ar>الكريْمِ</ar>
               </t>
               <t>
                  <ar>ادَّخَاْرَهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَأُعْرضُ عَنْ شَتْمِ اللَّئِيْمِ تَكَرُّمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأُعْرضُ</ar>
               </t>
               <t>
                  <ar>عَنْ</ar>
               </t>
               <t>
                  <ar>شَتْمِ</ar>
               </t>
               <t>
                  <ar>اللَّئِيْمِ</ar>
               </t>
               <t>
                  <ar>تَكَرُّمَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٥٢٣٧" poet="النَّاْبِغَةُ الذُّبْيَاْنِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَحَلَّتْ بُيُوْتِي فِي يَفَاْعٍ مُمَنَّعٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَحَلَّتْ</ar>
               </t>
               <t>
                  <ar>بُيُوْتِي</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>يَفَاْعٍ</ar>
               </t>
               <t>
                  <ar>مُمَنَّعٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>يُخَاْلُ بِهِ رَاْعِي الْحَمولِةِ طَاْئِرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يُخَاْلُ</ar>
               </t>
               <t>
                  <ar>بِهِ</ar>
               </t>
               <t>
                  <ar>رَاْعِي</ar>
               </t>
               <t>
                  <ar>الْحَمولِةِ</ar>
               </t>
               <t>
                  <ar>طَاْئِرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>حِذَاْرًا عَلَى أَنْ لَا تُصَاْبَ مَقَاْدَتِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حِذَاْرًا</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تُصَاْبَ</ar>
               </t>
               <t>
                  <ar>مَقَاْدَتِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَا نِسْوَتِي حَتَّى يَمُتْنَ حَرَاْئرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>نِسْوَتِي</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>يَمُتْنَ</ar>
               </t>
               <t>
                  <ar>حَرَاْئرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٥٦٩٤" poet="الْحَاْرِثُ بْنُ هِشَاْمٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>فصَفَحْتُ عَنْهُمْ وَالْأَحِبَّةُ فِيْهِِمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فصَفَحْتُ</ar>
               </t>
               <t>
                  <ar>عَنْهُمْ</ar>
               </t>
               <t>
                  <ar>وَالْأَحِبَّةُ</ar>
               </t>
               <t>
                  <ar>فِيْهِِمِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>طَمَعًا لَهُمْ بِعِقَاْبِ يَوْمٍ مُفْسِدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>طَمَعًا</ar>
               </t>
               <t>
                  <ar>لَهُمْ</ar>
               </t>
               <t>
                  <ar>بِعِقَاْبِ</ar>
               </t>
               <t>
                  <ar>يَوْمٍ</ar>
               </t>
               <t>
                  <ar>مُفْسِدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٩٩٢٨" poet="الْعَجَّاْجُ">
      <verse>
         <hemistiche>
            <text>
               <ar>يَرْكَبُ كُلَّ عَاْقِرٍ جُمْهُوْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَرْكَبُ</ar>
               </t>
               <t>
                  <ar>كُلَّ</ar>
               </t>
               <t>
                  <ar>عَاْقِرٍ</ar>
               </t>
               <t>
                  <ar>جُمْهُوْرِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مَخَاْفَةً وَزَعَلَ المَحْبوْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَخَاْفَةً</ar>
               </t>
               <t>
                  <ar>وَزَعَلَ</ar>
               </t>
               <t>
                  <ar>المَحْبوْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>وَالهَوْلَ مِنْ تَهَوُّلِ الْقُبُوْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَالهَوْلَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>تَهَوُّلِ</ar>
               </t>
               <t>
                  <ar>الْقُبُوْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
