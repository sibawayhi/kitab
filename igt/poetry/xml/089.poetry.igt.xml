<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="089">
   <verses id="٣٠٢٥٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنِّي لَأَمْنَحُكَ الصُّدُوْدَ وَإِنِّنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنِّي</ar>
               </t>
               <t>
                  <ar>لَأَمْنَحُكَ</ar>
               </t>
               <t>
                  <ar>الصُّدُوْدَ</ar>
               </t>
               <t>
                  <ar>وَإِنِّنِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>قَسَمًا إِلَيْكَ مَعَ الصُّدُوْدِ لَأَمْيَلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَسَمًا</ar>
               </t>
               <t>
                  <ar>إِلَيْكَ</ar>
               </t>
               <t>
                  <ar>مَعَ</ar>
               </t>
               <t>
                  <ar>الصُّدُوْدِ</ar>
               </t>
               <t>
                  <ar>لَأَمْيَلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٢٥٠١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنّ نِزَاْرًا أَصْبَحَتْ نِزَاْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنّ</ar>
               </t>
               <t>
                  <ar>نِزَاْرًا</ar>
               </t>
               <t>
                  <ar>أَصْبَحَتْ</ar>
               </t>
               <t>
                  <ar>نِزَاْرَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>دَعْوَةَ أَبْرَاْرٍ دَعَوْا أَبْرْاْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>دَعْوَةَ</ar>
               </t>
               <t>
                  <ar>أَبْرَاْرٍ</ar>
               </t>
               <t>
                  <ar>دَعَوْا</ar>
               </t>
               <t>
                  <ar>أَبْرْاْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٦٧٢١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>دَأَبْتُ أِلَى أَنْ يَنْبُتَ الظَّلُّ بَعْدَ مَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>دَأَبْتُ</ar>
               </t>
               <t>
                  <ar>أِلَى</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>يَنْبُتَ</ar>
               </t>
               <t>
                  <ar>الظَّلُّ</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تَقَاْصَرَ حَتَّى كَاْدَ فِي الآلِ يَمْصَحُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَقَاْصَرَ</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>كَاْدَ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>الآلِ</ar>
               </t>
               <t>
                  <ar>يَمْصَحُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>وَجِيْفَ المَطَاْيَا ثُمَّّ قُلْتُ لِصُحْبَتِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَجِيْفَ</ar>
               </t>
               <t>
                  <ar>المَطَاْيَا</ar>
               </t>
               <t>
                  <ar>ثُمَّّ</ar>
               </t>
               <t>
                  <ar>قُلْتُ</ar>
               </t>
               <t>
                  <ar>لِصُحْبَتِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَمْ يَنْزِلُوْا أَبرَدْتُمُ فَتَرَوَّحُوْا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَمْ</ar>
               </t>
               <t>
                  <ar>يَنْزِلُوْا</ar>
               </t>
               <t>
                  <ar>أَبرَدْتُمُ</ar>
               </t>
               <t>
                  <ar>فَتَرَوَّحُوْا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
