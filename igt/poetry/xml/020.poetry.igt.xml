<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="020">
   <verses id="١٠٤٦٤" nbr="1">
      <verse>
         <hemistiche>
            <text>
               <ar>مُعَاْوِيَ إِنَّمَا بَشَرٌ فَأَسْجِحْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُعَاْوِيَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>إِنَّمَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>بَشَرٌ</ar>
                  <en/>
               </t>
               <t>
                  <ar>فَأَسْجِحْ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَلَسْنَا بِالْجِبَاْلِ وَلَا الْحَدِيْدَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَسْنَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِالْجِبَاْلِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>وَلَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْحَدِيْدَا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠١٨٢٨" nbr="2">
      <verse>
         <hemistiche>
            <text>
               <ar>فَإِنْ لَمْ تَجِدْ مِنْ دُوْنِ عَدْنَاْنَ وَاْلِدًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>لَمْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>تَجِدْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مِنْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>دُوْنِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>عَدْنَاْنَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>وَاْلِدًا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَدُوْنَ مَعَدٍّ فَلْتَزَعْكَ الْعَوَاْذِلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَدُوْنَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مَعَدٍّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>فَلْتَزَعْكَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْعَوَاْذِلُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٨٩٦٧" nbr="3">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَا حَيَّ نَدْمَاْنِي عُمَيْرِ بْنِ عَاْمِرٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>حَيَّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>نَدْمَاْنِي</ar>
                  <en/>
               </t>
               <t>
                  <ar>عُمَيْرِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بْنِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>عَاْمِرٍ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إِذَا مَا تَلَاْقَيْنَا مِنَ الْيَوْمِ أَوْ غَدَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>مَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>تَلَاْقَيْنَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>مِنَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْيَوْمِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>أَوْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>غَدَا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٠٣٢٧" nbr="4">
      <verse>
         <hemistiche>
            <text>
               <ar>كَشْحًا طَوَى مِنْ بَلَدٍ مُخْتَاْرًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَشْحًا</ar>
                  <en/>
               </t>
               <t>
                  <ar>طَوَى</ar>
                  <en/>
               </t>
               <t>
                  <ar>مِنْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بَلَدٍ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مُخْتَاْرًا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مِنْ يَأْسَةِ الْيَاْئِسِ أَوْ حِذَاْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِنْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>يَأْسَةِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْيَاْئِسِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>أَوْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>حِذَاْرَا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
