<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="042">
   <verses id="١٤٤٤٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>كَأَنَّ عَذِيْرَهُمْ بِجَنُوْبِ سِلَّى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَأَنَّ</ar>
               </t>
               <t>
                  <ar>عَذِيْرَهُمْ</ar>
               </t>
               <t>
                  <ar>بِجَنُوْبِ</ar>
               </t>
               <t>
                  <ar>سِلَّى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>نَعَاْمٌ قَاْقَ فِي بَلَدٍ قِفَاْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نَعَاْمٌ</ar>
               </t>
               <t>
                  <ar>قَاْقَ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>بَلَدٍ</ar>
               </t>
               <t>
                  <ar>قِفَاْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥١٣٣٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَأَبْغِيَنَّكُمُ قَنًا وَعُوَاْرِضًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَأَبْغِيَنَّكُمُ</ar>
               </t>
               <t>
                  <ar>قَنًا</ar>
               </t>
               <t>
                  <ar>وَعُوَاْرِضًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَأُقْبِلَنَّ الْخَيْلَ لَاْبَةَ ضَرْغِدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَأُقْبِلَنَّ</ar>
               </t>
               <t>
                  <ar>الْخَيْلَ</ar>
               </t>
               <t>
                  <ar>لَاْبَةَ</ar>
               </t>
               <t>
                  <ar>ضَرْغِدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٠٥٧٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَدْنٌ بِهَزِّ الكَفِّ يَعْسِلُ مَتْنُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَدْنٌ</ar>
               </t>
               <t>
                  <ar>بِهَزِّ</ar>
               </t>
               <t>
                  <ar>الكَفِّ</ar>
               </t>
               <t>
                  <ar>يَعْسِلُ</ar>
               </t>
               <t>
                  <ar>مَتْنُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فِيْهِ كَمَا عَسَلَ الطَّرِيْقَ الثَّعْلَبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فِيْهِ</ar>
               </t>
               <t>
                  <ar>كَمَا</ar>
               </t>
               <t>
                  <ar>عَسَلَ</ar>
               </t>
               <t>
                  <ar>الطَّرِيْقَ</ar>
               </t>
               <t>
                  <ar>الثَّعْلَبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٠٤٣٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَشَرُّ الْمَنَاْيَا مَيَّتٌ بَيْنَ أَهْلِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَشَرُّ</ar>
               </t>
               <t>
                  <ar>الْمَنَاْيَا</ar>
               </t>
               <t>
                  <ar>مَيَّتٌ</ar>
               </t>
               <t>
                  <ar>بَيْنَ</ar>
               </t>
               <t>
                  <ar>أَهْلِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَهُلْكِ الْفَتَى قَدْ أَسْلَمَ الْحَىَّ حَاْضِرُهْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَهُلْكِ</ar>
               </t>
               <t>
                  <ar>الْفَتَى</ar>
               </t>
               <t>
                  <ar>قَدْ</ar>
               </t>
               <t>
                  <ar>أَسْلَمَ</ar>
               </t>
               <t>
                  <ar>الْحَىَّ</ar>
               </t>
               <t>
                  <ar>حَاْضِرُهْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٤٧٧٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَكَيْفَ تُوَاْصِلُ مَنْ أَصْبَحَتْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَكَيْفَ</ar>
               </t>
               <t>
                  <ar>تُوَاْصِلُ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>أَصْبَحَتْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>خُلَاْلَتُهُ كَأَبِي مَرْحَبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>خُلَاْلَتُهُ</ar>
               </t>
               <t>
                  <ar>كَأَبِي</ar>
               </t>
               <t>
                  <ar>مَرْحَبِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
