   <verses id="٢٩٩٧٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>الْحَرْبُ أَوَّلُ مَا تَكُوْنُ فَتِيَّة</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>الْحَرْبُ</ar>
               </t>
               <t>
                  <ar>أَوَّلُ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>تَكُوْنُ</ar>
               </t>
               <t>
                  <ar>فَتِيَّة</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تَسْعَى بِبِزَّتِهَا لِكُلِّ جَهُوْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَسْعَى</ar>
               </t>
               <t>
                  <ar>بِبِزَّتِهَا</ar>
               </t>
               <t>
                  <ar>لِكُلِّ</ar>
               </t>
               <t>
                  <ar>جَهُوْلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
