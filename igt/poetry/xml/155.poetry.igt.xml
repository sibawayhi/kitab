<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="155">
   <verses id="٦٨٧٠٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>تَبْكِيْهُمُ دَهْمَاْءَ مُعْوِلَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَبْكِيْهُمُ</ar>
               </t>
               <t>
                  <ar>دَهْمَاْءَ</ar>
               </t>
               <t>
                  <ar>مُعْوِلَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَتَقُوْلُ سَلْمَى وَارَزِيَّتِيَهْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَتَقُوْلُ</ar>
               </t>
               <t>
                  <ar>سَلْمَى</ar>
               </t>
               <t>
                  <ar>وَارَزِيَّتِيَهْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٧٥٧٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَهِيَ تُنَاْدِي بِأَبِي وَابْنِيْمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَهِيَ</ar>
               </t>
               <t>
                  <ar>تُنَاْدِي</ar>
               </t>
               <t>
                  <ar>بِأَبِي</ar>
               </t>
               <t>
                  <ar>وَابْنِيْمَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
