   <verses id="٥١٢٠٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>هَبَّتْ جَنُوْبًا فَذِكْرَى مَا ذَكَرْتُكُمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>هَبَّتْ</ar>
               </t>
               <t>
                  <ar>جَنُوْبًا</ar>
               </t>
               <t>
                  <ar>فَذِكْرَى</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>ذَكَرْتُكُمُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عِنْدَ الصَّفَاْةِ الَّتِي شَرْقِيَّ حَوْرَاْنَا</ar>
               <free/>
            </text>
