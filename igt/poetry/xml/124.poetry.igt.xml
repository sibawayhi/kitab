<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="124">
   <verses id="٢٣٥٨١" poet="الْأَنْصَاْرِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَكَفَى بِنَا فَضْلًا عَلَى مَنْ غَيْرِنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَكَفَى</ar>
               </t>
               <t>
                  <ar>بِنَا</ar>
               </t>
               <t>
                  <ar>فَضْلًا</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>غَيْرِنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>حُبُّ النَّبِيِّ مُحَمَّدٍ إِيَّاْنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حُبُّ</ar>
               </t>
               <t>
                  <ar>النَّبِيِّ</ar>
               </t>
               <t>
                  <ar>مُحَمَّدٍ</ar>
               </t>
               <t>
                  <ar>إِيَّاْنَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥١٦١٣" poet="الْفَرَزْدَقُ">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنَّي وَإِيَّاْكَ إِذْ بِأَرْحُلِنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّي</ar>
               </t>
               <t>
                  <ar>وَإِيَّاْكَ</ar>
               </t>
               <t>
                  <ar>إِذْ</ar>
               </t>
               <t>
                  <ar>بِأَرْحُلِنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَمَنْ بِوَاْدِيْهِ بَعْدَ الْمَحْلِ مَمْطُوْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَمَنْ</ar>
               </t>
               <t>
                  <ar>بِوَاْدِيْهِ</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>الْمَحْلِ</ar>
               </t>
               <t>
                  <ar>مَمْطُوْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢١٧٨١" poet="عَمْرٌو بْنُ قَمِيْئَةَ">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا رُبَّ مَنْ يُبْغِضُ أَذْوَاْدَنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>رُبَّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>يُبْغِضُ</ar>
               </t>
               <t>
                  <ar>أَذْوَاْدَنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>رُحْنَا عَلَى بَغْضَاْئِهِ وَاغْتَدَيْنَ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>رُحْنَا</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>بَغْضَاْئِهِ</ar>
               </t>
               <t>
                  <ar>وَاغْتَدَيْنَ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٧٢٤٨" poet="أُمَيَّةُ بْنُ أَبِي الصَّلت">
      <verse>
         <hemistiche>
            <text>
               <ar>رُبَّ مَا تَكْرَهُ النُّفُوْسُ مِنَ الأَمْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>رُبَّ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>تَكْرَهُ</ar>
               </t>
               <t>
                  <ar>النُّفُوْسُ</ar>
               </t>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>الأَمْرِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَهُ فَرْجَةٌ كَحَلِّ الْعِقَاْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>فَرْجَةٌ</ar>
               </t>
               <t>
                  <ar>كَحَلِّ</ar>
               </t>
               <t>
                  <ar>الْعِقَاْلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٦٢٩٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلا رُبَّ مَنْ تَغْتَشُّهُ لَكَ نَاْصِحٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلا</ar>
               </t>
               <t>
                  <ar>رُبَّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>تَغْتَشُّهُ</ar>
               </t>
               <t>
                  <ar>لَكَ</ar>
               </t>
               <t>
                  <ar>نَاْصِحٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَمُؤْتَمَنٍ بِالْغَيْبِ غَيْرِ أَمِيْنِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمُؤْتَمَنٍ</ar>
               </t>
               <t>
                  <ar>بِالْغَيْبِ</ar>
               </t>
               <t>
                  <ar>غَيْرِ</ar>
               </t>
               <t>
                  <ar>أَمِيْنِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٨٥٤٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلا رُبَّ مَنْ قَلْبِي لَهُ اللهُ نَاْصِحٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلا</ar>
               </t>
               <t>
                  <ar>رُبَّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>قَلْبِي</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>اللهُ</ar>
               </t>
               <t>
                  <ar>نَاْصِحٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَمَنْ هُوَ عِنْدِي فِي الظِّبَاْءِ السَّوَاْنِحِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمَنْ</ar>
               </t>
               <t>
                  <ar>هُوَ</ar>
               </t>
               <t>
                  <ar>عِنْدِي</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>الظِّبَاْءِ</ar>
               </t>
               <t>
                  <ar>السَّوَاْنِحِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
