   <verses id="٦٩٨٠٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَمَا صَرَمْتُكِ حَتّى قُلْتِ مُعْلِنَةً</ar>
               <free/>
            </text>
