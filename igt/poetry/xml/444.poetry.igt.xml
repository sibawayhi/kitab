<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="444">
   <verses id="٦٥٢٩٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>سَوِدُت فَلَمْ أَمْلِكْ سَوَاْدَى وَتَحْتَهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سَوِدُت</ar>
               </t>
               <t>
                  <ar>فَلَمْ</ar>
               </t>
               <t>
                  <ar>أَمْلِكْ</ar>
               </t>
               <t>
                  <ar>سَوَاْدَى</ar>
               </t>
               <t>
                  <ar>وَتَحْتَهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>قَمِيْصٌ مِنَ الْقُوْهِيِّ بِيْضٌ بِنَاْئُقَهْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَمِيْصٌ</ar>
               </t>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>الْقُوْهِيِّ</ar>
               </t>
               <t>
                  <ar>بِيْضٌ</ar>
               </t>
               <t>
                  <ar>بِنَاْئُقَهْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٠٨٠٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَقَفْتُ عَلَى رَبْعٍ لَمَيَّةَ مَا قَتَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَقَفْتُ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>رَبْعٍ</ar>
               </t>
               <t>
                  <ar>لَمَيَّةَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>قَتَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فُمَا زِلْتُ أَبْكِي حَوْلَهُ وَأُخَاْطِبُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فُمَا</ar>
               </t>
               <t>
                  <ar>زِلْتُ</ar>
               </t>
               <t>
                  <ar>أَبْكِي</ar>
               </t>
               <t>
                  <ar>حَوْلَهُ</ar>
               </t>
               <t>
                  <ar>وَأُخَاْطِبُهُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٦٢١٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَأَسْقِيْهِ حَتَّى كَاْدَ مِمّا أُبِثُّهَ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأَسْقِيْهِ</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>كَاْدَ</ar>
               </t>
               <t>
                  <ar>مِمّا</ar>
               </t>
               <t>
                  <ar>أُبِثُّهَ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تُكَلِّمُنِي أَحْجَاْرُهُ وَمَلَاْعِبُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تُكَلِّمُنِي</ar>
               </t>
               <t>
                  <ar>أَحْجَاْرُهُ</ar>
               </t>
               <t>
                  <ar>وَمَلَاْعِبُهُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨١٧٥٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>مَا زِلْتُ أُغْلِقُ أَبْوَاْبًا وَأَفْتَحُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>زِلْتُ</ar>
               </t>
               <t>
                  <ar>أُغْلِقُ</ar>
               </t>
               <t>
                  <ar>أَبْوَاْبًا</ar>
               </t>
               <t>
                  <ar>وَأَفْتَحُهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>حَتِى أَتَيْتُ أَبَا عَمْرِو بْنَ عَمّاْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حَتِى</ar>
               </t>
               <t>
                  <ar>أَتَيْتُ</ar>
               </t>
               <t>
                  <ar>أَبَا</ar>
               </t>
               <t>
                  <ar>عَمْرِو</ar>
               </t>
               <t>
                  <ar>بْنَ</ar>
               </t>
               <t>
                  <ar>عَمّاْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
