<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="263">
   <verses id="٥٠٩٣٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَوّدَتُ قَوْمِي إذَا مَا الضَّيْفُ نَبَّهَنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَوّدَتُ</ar>
               </t>
               <t>
                  <ar>قَوْمِي</ar>
               </t>
               <t>
                  <ar>إذَا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>الضَّيْفُ</ar>
               </t>
               <t>
                  <ar>نَبَّهَنِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَقْرَ الْعِشَّاْرِ عَلَى عُسْرِي وَإِيْسَاْرِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَقْرَ</ar>
               </t>
               <t>
                  <ar>الْعِشَّاْرِ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>عُسْرِي</ar>
               </t>
               <t>
                  <ar>وَإِيْسَاْرِي</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٦٦٧٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إنِّي إذَا خَفِيَتْ نَاْرٌ لِمُرْمِلَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إنِّي</ar>
               </t>
               <t>
                  <ar>إذَا</ar>
               </t>
               <t>
                  <ar>خَفِيَتْ</ar>
               </t>
               <t>
                  <ar>نَاْرٌ</ar>
               </t>
               <t>
                  <ar>لِمُرْمِلَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أُلْفَي بِأَرْفَعِ تَلٍّ رَاْفِعًا نَاْرِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أُلْفَي</ar>
               </t>
               <t>
                  <ar>بِأَرْفَعِ</ar>
               </t>
               <t>
                  <ar>تَلٍّ</ar>
               </t>
               <t>
                  <ar>رَاْفِعًا</ar>
               </t>
               <t>
                  <ar>نَاْرِي</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢١٠٨٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>ذَاْكَ وَإِنِّي عَلَى جَاْرِي لِذُو حَدَبٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ذَاْكَ</ar>
               </t>
               <t>
                  <ar>وَإِنِّي</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>جَاْرِي</ar>
               </t>
               <t>
                  <ar>لِذُو</ar>
               </t>
               <t>
                  <ar>حَدَبٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَحْنُو عَلَيْهِ بِمَا يُحْنَى عَلَى الْجَاْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَحْنُو</ar>
               </t>
               <t>
                  <ar>عَلَيْهِ</ar>
               </t>
               <t>
                  <ar>بِمَا</ar>
               </t>
               <t>
                  <ar>يُحْنَى</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الْجَاْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
