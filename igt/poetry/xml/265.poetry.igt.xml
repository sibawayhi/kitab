<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="265">
   <verses id="٠٩٧٧٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَبْلِغِ الْحَاْرِثَ بْنَ ظَاْلِمٍ الْمُوْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَبْلِغِ</ar>
               </t>
               <t>
                  <ar>الْحَاْرِثَ</ar>
               </t>
               <t>
                  <ar>بْنَ</ar>
               </t>
               <t>
                  <ar>ظَاْلِمٍ</ar>
               </t>
               <t>
                  <ar>الْمُوْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ـعِدَ وَالنَّاْذِرَ النُّذُوْرَ عَلَيَّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ـعِدَ</ar>
               </t>
               <t>
                  <ar>وَالنَّاْذِرَ</ar>
               </t>
               <t>
                  <ar>النُّذُوْرَ</ar>
               </t>
               <t>
                  <ar>عَلَيَّا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>أَنَّمَا تَقْتُلُ النِّيَاْمُ وَلَا تَقْتُلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَنَّمَا</ar>
               </t>
               <t>
                  <ar>تَقْتُلُ</ar>
               </t>
               <t>
                  <ar>النِّيَاْمُ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>تَقْتُلُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>يَقْظَاْنُ ذَا سِلَاْحٍ كَمِيَّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَقْظَاْنُ</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>سِلَاْحٍ</ar>
               </t>
               <t>
                  <ar>كَمِيَّا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١١٥٩٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَرَاْنِي وَلَا كُفْرَاْنَ لِلَّهِ إنَّمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَرَاْنِي</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>كُفْرَاْنَ</ar>
               </t>
               <t>
                  <ar>لِلَّهِ</ar>
               </t>
               <t>
                  <ar>إنَّمَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أٌ وَاخِي مِنْ الْأَقْوَاْمِ كُلَّ بَخِيْلٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أٌ</ar>
               </t>
               <t>
                  <ar>وَاخِي</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>الْأَقْوَاْمِ</ar>
               </t>
               <t>
                  <ar>كُلَّ</ar>
               </t>
               <t>
                  <ar>بَخِيْلٍ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
