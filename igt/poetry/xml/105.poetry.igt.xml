<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="105">
   <verses id="٥١٨٣٩" poet="مَاْلِكُ بْنُ خُوَيْلِدٍ الْخُنَاْعِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا مَيَّ إِنْ تَفْقِدِي قَوْمًا وَلَدْتِهِمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>مَيَّ</ar>
               </t>
               <t>
                  <ar>إِنْ</ar>
               </t>
               <t>
                  <ar>تَفْقِدِي</ar>
               </t>
               <t>
                  <ar>قَوْمًا</ar>
               </t>
               <t>
                  <ar>وَلَدْتِهِمِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَوْ تُخْلَسِيْهِمْ فَإِنَّ الدَّهْرَ خَلَّاْسُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>تُخْلَسِيْهِمْ</ar>
               </t>
               <t>
                  <ar>فَإِنَّ</ar>
               </t>
               <t>
                  <ar>الدَّهْرَ</ar>
               </t>
               <t>
                  <ar>خَلَّاْسُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>عَمْرٌو وَعَبْدُ مَنَاْفٍ وَالَّذِي عَهِدَتْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَمْرٌو</ar>
               </t>
               <t>
                  <ar>وَعَبْدُ</ar>
               </t>
               <t>
                  <ar>مَنَاْفٍ</ar>
               </t>
               <t>
                  <ar>وَالَّذِي</ar>
               </t>
               <t>
                  <ar>عَهِدَتْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِبَطْنِ عَرْعَرَ آبِي الضَّيْمِ عَبَّاْسُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِبَطْنِ</ar>
               </t>
               <t>
                  <ar>عَرْعَرَ</ar>
               </t>
               <t>
                  <ar>آبِي</ar>
               </t>
               <t>
                  <ar>الضَّيْمِ</ar>
               </t>
               <t>
                  <ar>عَبَّاْسُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٩٢٨١" poet="مُهَلْهِلٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَقَدْ خَبَطْنَ بُيُوْتَ يَشْكُرَ خَبْطَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَقَدْ</ar>
               </t>
               <t>
                  <ar>خَبَطْنَ</ar>
               </t>
               <t>
                  <ar>بُيُوْتَ</ar>
               </t>
               <t>
                  <ar>يَشْكُرَ</ar>
               </t>
               <t>
                  <ar>خَبْطَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَخْوَاْلُنَا وَهُمُ بَنُو الْأَعْمَاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَخْوَاْلُنَا</ar>
               </t>
               <t>
                  <ar>وَهُمُ</ar>
               </t>
               <t>
                  <ar>بَنُو</ar>
               </t>
               <t>
                  <ar>الْأَعْمَاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٤٤٦٩" poet="الْفَرَزْدَقُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَرِثْتُ أَبِي أَخْلَاْقَهُ عَاْجِلَ الْقِرَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَرِثْتُ</ar>
               </t>
               <t>
                  <ar>أَبِي</ar>
               </t>
               <t>
                  <ar>أَخْلَاْقَهُ</ar>
               </t>
               <t>
                  <ar>عَاْجِلَ</ar>
               </t>
               <t>
                  <ar>الْقِرَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَعَبْطَ الْمَهَاْرِي كُوْمُهَا وَشُبُوْبُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَعَبْطَ</ar>
               </t>
               <t>
                  <ar>الْمَهَاْرِي</ar>
               </t>
               <t>
                  <ar>كُوْمُهَا</ar>
               </t>
               <t>
                  <ar>وَشُبُوْبُهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٧٢١٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَسَاْقِيَيْنِ مِثْلِ زَيْدٍ وَجُعَلْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَسَاْقِيَيْنِ</ar>
               </t>
               <t>
                  <ar>مِثْلِ</ar>
               </t>
               <t>
                  <ar>زَيْدٍ</ar>
               </t>
               <t>
                  <ar>وَجُعَلْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>سَقْبَاْنِ مَمْشُوْقَاْنِ مَكْنُوْزَا الْعَضَلْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سَقْبَاْنِ</ar>
               </t>
               <t>
                  <ar>مَمْشُوْقَاْنِ</ar>
               </t>
               <t>
                  <ar>مَكْنُوْزَا</ar>
               </t>
               <t>
                  <ar>الْعَضَلْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
