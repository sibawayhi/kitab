<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="397">
   <verses id="٥٥٩٣٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لِلَهُ يَبْقَى عَلَى الْأَيَّاْمِ ذُو حِيَدٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لِلَهُ</ar>
               </t>
               <t>
                  <ar>يَبْقَى</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الْأَيَّاْمِ</ar>
               </t>
               <t>
                  <ar>ذُو</ar>
               </t>
               <t>
                  <ar>حِيَدٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِمُشْمَخِرٍّ بِهِ الظَّيّاْنُ وَالْآسُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِمُشْمَخِرٍّ</ar>
               </t>
               <t>
                  <ar>بِهِ</ar>
               </t>
               <t>
                  <ar>الظَّيّاْنُ</ar>
               </t>
               <t>
                  <ar>وَالْآسُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩١٦١١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَا رُبَّ مَنْ قَلْبِي لَهُ اللَّهَ نَاْصْحٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَا</ar>
               </t>
               <t>
                  <ar>رُبَّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>قَلْبِي</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>اللَّهَ</ar>
               </t>
               <t>
                  <ar>نَاْصْحٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ومَنْ قَلْبُهُ لِي فِي الظِّبَاْءِ السَّوَاْنَحِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ومَنْ</ar>
               </t>
               <t>
                  <ar>قَلْبُهُ</ar>
               </t>
               <t>
                  <ar>لِي</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>الظِّبَاْءِ</ar>
               </t>
               <t>
                  <ar>السَّوَاْنَحِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩١٦٠٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إَذَا مَا الْخُبْزُ تَأْدِمُهُ بِلَحْمٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إَذَا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>الْخُبْزُ</ar>
               </t>
               <t>
                  <ar>تَأْدِمُهُ</ar>
               </t>
               <t>
                  <ar>بِلَحْمٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَذَاْكَ أَمَاْنَةَ اللَّهِ الثَّرِيْدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَذَاْكَ</ar>
               </t>
               <t>
                  <ar>أَمَاْنَةَ</ar>
               </t>
               <t>
                  <ar>اللَّهِ</ar>
               </t>
               <t>
                  <ar>الثَّرِيْدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٣٥٣٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وجَدَّاْءَ مَا يُرْجَى بِهَا ذُو قَرَاْبَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وجَدَّاْءَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>يُرْجَى</ar>
               </t>
               <t>
                  <ar>بِهَا</ar>
               </t>
               <t>
                  <ar>ذُو</ar>
               </t>
               <t>
                  <ar>قَرَاْبَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لِعَطْفٍ وَمَا يَخْشَى السُّمَاْةَ رَبِيْبُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لِعَطْفٍ</ar>
               </t>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>يَخْشَى</ar>
               </t>
               <t>
                  <ar>السُّمَاْةَ</ar>
               </t>
               <t>
                  <ar>رَبِيْبُهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
