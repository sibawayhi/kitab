<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="254">
   <verses id="٤٩٤٧٩" poet="زُهَيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>بَدَا لِي أَنِّي لَسْتُ مُدْرِكَ مَا مَضَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بَدَا</ar>
               </t>
               <t>
                  <ar>لِي</ar>
               </t>
               <t>
                  <ar>أَنِّي</ar>
               </t>
               <t>
                  <ar>لَسْتُ</ar>
               </t>
               <t>
                  <ar>مُدْرِكَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>مَضَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ولَا سَاْبِقٍ شَيْئًا إِذَا كَاْنَ جَاْئِيَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ولَا</ar>
               </t>
               <t>
                  <ar>سَاْبِقٍ</ar>
               </t>
               <t>
                  <ar>شَيْئًا</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>كَاْنَ</ar>
               </t>
               <t>
                  <ar>جَاْئِيَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٧٦٦١" poet="عَمْرٌو بْنُ عَمَّاْرٍ الطَّاْئِي">
      <verse>
         <hemistiche>
            <text>
               <ar>فَقُلْتُ لَهُ صَوِّبْ وَلَا تَجْهَدَنَّهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقُلْتُ</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>صَوِّبْ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>تَجْهَدَنَّهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فِيُدْنِكَ مِنْ أُخْرَى الْقَطَاْةِ فَتَزْلَقِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فِيُدْنِكَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>أُخْرَى</ar>
               </t>
               <t>
                  <ar>الْقَطَاْةِ</ar>
               </t>
               <t>
                  <ar>فَتَزْلَقِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣١٤١٩" poet="الشَّمَاْخُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَدَوِيَّةٍ قَفْرٍ تَمَشَّى نَعَاْمُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَدَوِيَّةٍ</ar>
               </t>
               <t>
                  <ar>قَفْرٍ</ar>
               </t>
               <t>
                  <ar>تَمَشَّى</ar>
               </t>
               <t>
                  <ar>نَعَاْمُهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَمَشْيِ النَّصَاْرَى فِي خِفَاْفِ الْأَرَنْدَجِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَمَشْيِ</ar>
               </t>
               <t>
                  <ar>النَّصَاْرَى</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>خِفَاْفِ</ar>
               </t>
               <t>
                  <ar>الْأَرَنْدَجِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
