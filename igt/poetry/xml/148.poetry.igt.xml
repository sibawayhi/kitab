      </verse>
   </verses>
   <verses id="٠٧٠٩٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا دَاْرُ حَسَّرَهَا الْبِلَى تَحْسِيْرًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>دَاْرُ</ar>
               </t>
               <t>
                  <ar>حَسَّرَهَا</ar>
               </t>
               <t>
                  <ar>الْبِلَى</ar>
               </t>
               <t>
                  <ar>تَحْسِيْرًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَسَفَتْ عَلَيْهَا الرِّيْحُ بَعْدَكَ مُوْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَسَفَتْ</ar>
               </t>
               <t>
                  <ar>عَلَيْهَا</ar>
               </t>
               <t>
                  <ar>الرِّيْحُ</ar>
               </t>
               <t>
                  <ar>بَعْدَكَ</ar>
               </t>
               <t>
                  <ar>مُوْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٧٨٥١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلا يَا بَيْتُ بِالْعَلْيَاْءِ بَيْتُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلا</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>بَيْتُ</ar>
               </t>
               <t>
                  <ar>بِالْعَلْيَاْءِ</ar>
               </t>
               <t>
                  <ar>بَيْتُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَوْلَا حُبُّ أَهْلِكَ مَا أَتَيْتُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَوْلَا</ar>
               </t>
               <t>
                  <ar>حُبُّ</ar>
               </t>
               <t>
                  <ar>أَهْلِكَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَتَيْتُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٧٥٣٣" poet="">
