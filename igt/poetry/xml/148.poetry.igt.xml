<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="148">
   <verses id="٢٠٢٧٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>مِنْ أَجْلِكِ يَا الَّتِي تَيَّمْتِ قَلْبِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>أَجْلِكِ</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>الَّتِي</ar>
               </t>
               <t>
                  <ar>تَيَّمْتِ</ar>
               </t>
               <t>
                  <ar>قَلْبِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَأَنْتِ بَخِيْلَةٌ بِالْوُدِّ عَنِّي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأَنْتِ</ar>
               </t>
               <t>
                  <ar>بَخِيْلَةٌ</ar>
               </t>
               <t>
                  <ar>بِالْوُدِّ</ar>
               </t>
               <t>
                  <ar>عَنِّي</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٨٠٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَدَاْرًا بِحُزْوَى هِجْتِ لِلْعَيْنِ عَبْرَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَدَاْرًا</ar>
               </t>
               <t>
                  <ar>بِحُزْوَى</ar>
               </t>
               <t>
                  <ar>هِجْتِ</ar>
               </t>
               <t>
                  <ar>لِلْعَيْنِ</ar>
               </t>
               <t>
                  <ar>عَبْرَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَمَاْءُ الْهَوَى يَرْفَضُّ أَوْ يَتَرَقْرَقُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَمَاْءُ</ar>
               </t>
               <t>
                  <ar>الْهَوَى</ar>
               </t>
               <t>
                  <ar>يَرْفَضُّ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>يَتَرَقْرَقُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٧٤٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَعَلَّكَ يَا تَيْسًا نَزَا فِي مَرِيْرَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَعَلَّكَ</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>تَيْسًا</ar>
               </t>
               <t>
                  <ar>نَزَا</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>مَرِيْرَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مُعَذِّبُ لَيْلَى أَنْ تَرَاْنِي أَزُوْرُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُعَذِّبُ</ar>
               </t>
               <t>
                  <ar>لَيْلَى</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>تَرَاْنِي</ar>
               </t>
               <t>
                  <ar>أَزُوْرُهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٩٨٨٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَيَا رَاْكِبًا إِمَّا عَرَضْتَ فَبَلِّغَنْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَيَا</ar>
               </t>
               <t>
                  <ar>رَاْكِبًا</ar>
               </t>
               <t>
                  <ar>إِمَّا</ar>
               </t>
               <t>
                  <ar>عَرَضْتَ</ar>
               </t>
               <t>
                  <ar>فَبَلِّغَنْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>نَدَاْمَاْيَ مِنْ نَجْرَاْنَ أنْ لَا تَلاْقِيَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نَدَاْمَاْيَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>نَجْرَاْنَ</ar>
               </t>
               <t>
                  <ar>أنْ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَلاْقِيَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٧٦٧٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا دَاْرُ أَقْوَتْ بَعْدَ أَصْرَاْمِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>دَاْرُ</ar>
               </t>
               <t>
                  <ar>أَقْوَتْ</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>أَصْرَاْمِهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَاْمًا وَمَا يَعْنِيْكَ مِنْ عَاْمِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَاْمًا</ar>
               </t>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>يَعْنِيْكَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>عَاْمِهَا</ar>
               </t>
            </igt>
