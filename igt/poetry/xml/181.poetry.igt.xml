<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="181">
   <verses id="٥٧٩٦٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>بِهَا الْعِيْنُ وَالْأَرْآمُ لَا عِدَّ عِنْدَهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِهَا</ar>
               </t>
               <t>
                  <ar>الْعِيْنُ</ar>
               </t>
               <t>
                  <ar>وَالْأَرْآمُ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>عِدَّ</ar>
               </t>
               <t>
                  <ar>عِنْدَهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ولَا كَرَعٌ إِلَّا الْمَغَاْرَاْتُ وَالرَّبْلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ولَا</ar>
               </t>
               <t>
                  <ar>كَرَعٌ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>الْمَغَاْرَاْتُ</ar>
               </t>
               <t>
                  <ar>وَالرَّبْلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٨١٧٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>هٰذَا لَعَمْرُكُمُ الصَّغَاْرُ بِعَيْنِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>هٰذَا</ar>
