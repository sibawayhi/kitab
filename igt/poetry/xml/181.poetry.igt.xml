               <t>
                  <ar>الصَّغَاْرُ</ar>
               </t>
               <t>
                  <ar>بِعَيْنِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَا أُمَّ لِي إِنْ كَاْنَ ذَاْكَ وَلَا أَبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>أُمَّ</ar>
               </t>
               <t>
                  <ar>لِي</ar>
               </t>
               <t>
                  <ar>إِنْ</ar>
               </t>
               <t>
                  <ar>كَاْنَ</ar>
               </t>
               <t>
                  <ar>ذَاْكَ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>أَبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
