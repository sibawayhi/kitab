<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="122">
   <verses id="٩٤١٤٥" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَاْبْنُ اللَّبُوْنِ إِذَا مَا لُزَّ فِي قَرَنٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَاْبْنُ</ar>
               </t>
               <t>
                  <ar>اللَّبُوْنِ</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>لُزَّ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>قَرَنٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَمْ يَسْتَطِعْ صَوْلَةَ الْبُزْلِ الْقَنَاْعِيْسِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>يَسْتَطِعْ</ar>
               </t>
               <t>
                  <ar>صَوْلَةَ</ar>
               </t>
               <t>
                  <ar>الْبُزْلِ</ar>
               </t>
               <t>
                  <ar>الْقَنَاْعِيْسِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٧٢٩٠" poet="أَبُو عِطَاْءٍ السِّنْدِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>مُفَدَّمَةً قَزًّا كَأَنَّ رِقَاْبَهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُفَدَّمَةً</ar>
               </t>
               <t>
                  <ar>قَزًّا</ar>
               </t>
               <t>
                  <ar>كَأَنَّ</ar>
               </t>
               <t>
                  <ar>رِقَاْبَهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>رِقَاْبُ بَنَاْتِ الْمَاْءِ أَفْزَعَهَا الرَّعْدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>رِقَاْبُ</ar>
               </t>
               <t>
                  <ar>بَنَاْتِ</ar>
               </t>
               <t>
                  <ar>الْمَاْءِ</ar>
               </t>
               <t>
                  <ar>أَفْزَعَهَا</ar>
               </t>
               <t>
                  <ar>الرَّعْدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٨٨٥٥" poet="الْفَرَزْدَقُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَجَدْنَا نَهْشَلًا فَضَلَتْ فُقَيْمًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَجَدْنَا</ar>
               </t>
               <t>
                  <ar>نَهْشَلًا</ar>
               </t>
               <t>
                  <ar>فَضَلَتْ</ar>
               </t>
               <t>
                  <ar>فُقَيْمًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَفَضْلِ ابْنِ الْمَخَاْضِ عَلَى الْفَصِيْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَفَضْلِ</ar>
               </t>
               <t>
                  <ar>ابْنِ</ar>
               </t>
               <t>
                  <ar>الْمَخَاْضِ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الْفَصِيْلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٠١١٥" poet="ذُو الرُّمَّةِ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَرَدْتُ اعْتِسَاْفًا وَالثُّرَيَّا كَأَنَّهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَرَدْتُ</ar>
               </t>
               <t>
                  <ar>اعْتِسَاْفًا</ar>
               </t>
               <t>
                  <ar>وَالثُّرَيَّا</ar>
               </t>
               <t>
                  <ar>كَأَنَّهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَلَى قِمَّةِ الرَّأْسِ ابْنُ مَاْءٍ مُحَلِّقُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>قِمَّةِ</ar>
               </t>
               <t>
                  <ar>الرَّأْسِ</ar>
               </t>
               <t>
                  <ar>ابْنُ</ar>
               </t>
               <t>
                  <ar>مَاْءٍ</ar>
               </t>
               <t>
                  <ar>مُحَلِّقُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٨١٩٨" poet="ذُو الرُّمَّةِ">
      <verse>
         <hemistiche>
            <text>
               <ar>كَأَنَّا عَلَى أَوْلَاْدِ أَحْقَبَ لاْحِبًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَأَنَّا</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>أَوْلَاْدِ</ar>
               </t>
               <t>
                  <ar>أَحْقَبَ</ar>
               </t>
               <t>
                  <ar>لاْحِبًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَرَمْيُ السَّفَا أَنْفَاْسَهَا بِسَهَاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَرَمْيُ</ar>
               </t>
               <t>
                  <ar>السَّفَا</ar>
               </t>
               <t>
                  <ar>أَنْفَاْسَهَا</ar>
               </t>
               <t>
                  <ar>بِسَهَاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>جَنُوْبٌ ذَوَتْ عَنْهَا التَّنَاْهِي وَأَنْزَلَتْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>جَنُوْبٌ</ar>
               </t>
               <t>
                  <ar>ذَوَتْ</ar>
               </t>
               <t>
                  <ar>عَنْهَا</ar>
               </t>
               <t>
                  <ar>التَّنَاْهِي</ar>
               </t>
               <t>
                  <ar>وَأَنْزَلَتْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِهَا يَوْمَ ذَبَّاْبِ السَّبِيْبِ صِيَاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِهَا</ar>
               </t>
               <t>
                  <ar>يَوْمَ</ar>
               </t>
               <t>
                  <ar>ذَبَّاْبِ</ar>
               </t>
               <t>
                  <ar>السَّبِيْبِ</ar>
               </t>
               <t>
                  <ar>صِيَاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
