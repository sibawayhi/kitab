<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="244">
   <verses id="٨٨٢٥٢" poet="رُؤْبَةُ">
      <verse>
         <hemistiche>
            <text>
               <ar>يُرِيْدُ أَنْ يُعْرِبَهُ فَيُعْجِمُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يُرِيْدُ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>يُعْرِبَهُ</ar>
               </t>
               <t>
                  <ar>فَيُعْجِمُهُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢١٤٢٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَمَا هُوَ إِلَّا أَنْ أَرَاْهَا فُجَاْءَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَمَا</ar>
               </t>
               <t>
                  <ar>هُوَ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>أَرَاْهَا</ar>
               </t>
               <t>
                  <ar>فُجَاْءَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَأُبْهَتُ حَتَّى مَا أَكَاْدُ أُجِيْبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأُبْهَتُ</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَكَاْدُ</ar>
               </t>
               <t>
                  <ar>أُجِيْبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤١٩٧٨" poet="ابْنُ أَحْمَرَ">
      <verse>
         <hemistiche>
            <text>
               <ar>يُعَاْلِجُ عَاْقِرًا أَعْيَتْ عَلَيْهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يُعَاْلِجُ</ar>
               </t>
               <t>
                  <ar>عَاْقِرًا</ar>
               </t>
               <t>
                  <ar>أَعْيَتْ</ar>
               </t>
               <t>
                  <ar>عَلَيْهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لِيُلْقِحَهَا فَيَنْتِجُهَا حُوَاْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لِيُلْقِحَهَا</ar>
               </t>
               <t>
                  <ar>فَيَنْتِجُهَا</ar>
               </t>
               <t>
                  <ar>حُوَاْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٢٧٠٤" poet="عَبْدُ الرَّحْمَنِ بْنُ أُمِّ الْحَكَمِ">
      <verse>
         <hemistiche>
            <text>
               <ar>عَلَى الْحَكَمِ الْمَأْتِيِّ يَوْمًا إِذَا قَضَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الْحَكَمِ</ar>
               </t>
               <t>
                  <ar>الْمَأْتِيِّ</ar>
               </t>
               <t>
                  <ar>يَوْمًا</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>قَضَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>قَضِيَّتَهُ أَنْ لَا يَجُوْرَ وَيَقْصِدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَضِيَّتَهُ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>يَجُوْرَ</ar>
               </t>
               <t>
                  <ar>وَيَقْصِدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
