<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="073">
   <verses id="١٧٣٧٣" poet="طَرَفَةُ بْنُ الْعَبْدِ">
      <verse>
         <hemistiche>
            <text>
               <ar>أَبَا مُنْذِرٍ أَفْنَيْتَ فَاسْتَبْقِ بَعْضَنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَبَا</ar>
               </t>
               <t>
                  <ar>مُنْذِرٍ</ar>
               </t>
               <t>
                  <ar>أَفْنَيْتَ</ar>
               </t>
               <t>
                  <ar>فَاسْتَبْقِ</ar>
               </t>
               <t>
                  <ar>بَعْضَنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>حَنَاْنَيْكَ بَعْضُ الشَّرِّ أَهْوَنُ مِنْ بَعْضِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حَنَاْنَيْكَ</ar>
               </t>
               <t>
                  <ar>بَعْضُ</ar>
               </t>
               <t>
                  <ar>الشَّرِّ</ar>
               </t>
               <t>
                  <ar>أَهْوَنُ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>بَعْضِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٢٤٥١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَقَاْلَتْ حَنَاْنٌ مَا أَتَى بِكَ هٰهُنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقَاْلَتْ</ar>
               </t>
               <t>
                  <ar>حَنَاْنٌ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَتَى</ar>
               </t>
               <t>
                  <ar>بِكَ</ar>
               </t>
               <t>
                  <ar>هٰهُنَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٠٨٥١" poet="عَبْدُ بَنِي الْحَسْحَاْسِ">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا شُقَّ بُرْدٌ شُقَّ بِالْبُرْدِ مِثْلُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>شُقَّ</ar>
               </t>
               <t>
                  <ar>بُرْدٌ</ar>
               </t>
               <t>
                  <ar>شُقَّ</ar>
               </t>
               <t>
                  <ar>بِالْبُرْدِ</ar>
               </t>
               <t>
                  <ar>مِثْلُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>دَوَاْلَيْكَ جَتَّى لَيْسَ لِلْبُرْدِ لَاْبِسُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>دَوَاْلَيْكَ</ar>
               </t>
               <t>
                  <ar>جَتَّى</ar>
               </t>
               <t>
                  <ar>لَيْسَ</ar>
               </t>
               <t>
                  <ar>لِلْبُرْدِ</ar>
               </t>
               <t>
                  <ar>لَاْبِسُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
