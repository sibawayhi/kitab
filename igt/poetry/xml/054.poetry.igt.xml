<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="054">
   <verses id="٩٥٦٠١" poet="عَمْرٌو بْنُ مَعْدِيْكَرِبَ">
      <verse>
         <hemistiche>
            <text>
               <ar>أُرِيْدُ حِبَاْءَهُ وَيُرِيْدُ قَتْلِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أُرِيْدُ</ar>
               </t>
               <t>
                  <ar>حِبَاْءَهُ</ar>
               </t>
               <t>
                  <ar>وَيُرِيْدُ</ar>
               </t>
               <t>
                  <ar>قَتْلِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَذِيْرَكَ مِنْ خَليْلِكَ مِنْ مُرَاْدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَذِيْرَكَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>خَليْلِكَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>مُرَاْدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٩٧٩٢" poet="الْكُمَيْتُ">
      <verse>
         <hemistiche>
            <text>
               <ar>نَعَاْءِ جُذَاْمًا غَيْرَ مَوْتٍ وَلَا قَتْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نَعَاْءِ</ar>
               </t>
               <t>
                  <ar>جُذَاْمًا</ar>
               </t>
               <t>
                  <ar>غَيْرَ</ar>
               </t>
               <t>
                  <ar>مَوْتٍ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>قَتْلِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلٰكِنْ فِرَاْقًا لِلدَّعَاْئِمِ وَالْأَصْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلٰكِنْ</ar>
               </t>
               <t>
                  <ar>فِرَاْقًا</ar>
               </t>
               <t>
                  <ar>لِلدَّعَاْئِمِ</ar>
               </t>
               <t>
                  <ar>وَالْأَصْلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٥٢٣٩" poet="ذُو الْإِصْبَعِ الْعَدْوَاْنِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>عَذِيْرَ الْحَيِّ مِنْ عَدْوَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَذِيْرَ</ar>
               </t>
               <t>
                  <ar>الْحَيِّ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>عَدْوَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>نَ كَاْنُوْا حَيَّةَ الْأَرْضِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نَ</ar>
               </t>
               <t>
                  <ar>كَاْنُوْا</ar>
               </t>
               <t>
                  <ar>حَيَّةَ</ar>
               </t>
               <t>
                  <ar>الْأَرْضِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
