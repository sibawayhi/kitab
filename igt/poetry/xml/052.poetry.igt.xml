                  <ar>وَإِنْ</ar>
               </t>
               <t>
                  <ar>صَبْرٌ</ar>
               </t>
               <t>
                  <ar>فَنَصْبِرُ</ar>
               </t>
               <t>
                  <ar>لِلْصَّبْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
