<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="070">
   <verses id="٠٨٠٣٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَمْ تَعْلَمْ مُسَرَّحِيَ القَوَاْفِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَمْ</ar>
               </t>
               <t>
                  <ar>تَعْلَمْ</ar>
               </t>
               <t>
                  <ar>مُسَرَّحِيَ</ar>
               </t>
               <t>
                  <ar>القَوَاْفِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فلا عِيًّا بِهِنَّ وَلَا اجْتِلَاْبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فلا</ar>
               </t>
               <t>
                  <ar>عِيًّا</ar>
               </t>
               <t>
                  <ar>بِهِنَّ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>اجْتِلَاْبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٣٢٤٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>تَرْتَعُ مَا رَتَعَتْ حتَّى إِذَا ادَّكرتْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَرْتَعُ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>رَتَعَتْ</ar>
               </t>
               <t>
                  <ar>حتَّى</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>ادَّكرتْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنَّمَا هِيَ إِقْبَاْلٌ وَإِدْبَاْرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنَّمَا</ar>
               </t>
               <t>
                  <ar>هِيَ</ar>
               </t>
               <t>
                  <ar>إِقْبَاْلٌ</ar>
               </t>
               <t>
                  <ar>وَإِدْبَاْرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٩١٢٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَعَمْرِي وَمَا دَهْرِث بتَأْبِيْنِ هَاْلِكٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَعَمْرِي</ar>
               </t>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>دَهْرِث</ar>
               </t>
               <t>
                  <ar>بتَأْبِيْنِ</ar>
               </t>
               <t>
                  <ar>هَاْلِكٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَا جَزَعٍ مِمَّا أَصَاْبَ فَأَوْجَعَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>جَزَعٍ</ar>
               </t>
               <t>
                  <ar>مِمَّا</ar>
               </t>
               <t>
                  <ar>أَصَاْبَ</ar>
               </t>
               <t>
                  <ar>فَأَوْجَعَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٦٧٨١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَطَرَبًا وَأَنْتَ قِنَّسْرِىُّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَطَرَبًا</ar>
               </t>
               <t>
                  <ar>وَأَنْتَ</ar>
               </t>
               <t>
                  <ar>قِنَّسْرِىُّ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٧٧٥٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَعَبْدًا حَلَّ فِي شُعَبَى غَرِيْبًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَعَبْدًا</ar>
               </t>
               <t>
                  <ar>حَلَّ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>شُعَبَى</ar>
               </t>
               <t>
                  <ar>غَرِيْبًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَلُؤْمًا لَا أَبَا لكَ وَاغترَاْبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلُؤْمًا</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>أَبَا</ar>
               </t>
               <t>
                  <ar>لكَ</ar>
               </t>
               <t>
                  <ar>وَاغترَاْبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٣٠٩٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>سَمَاْعَ اللهِ وَالعُلِمَاْءِ أَنِّي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سَمَاْعَ</ar>
               </t>
               <t>
                  <ar>اللهِ</ar>
               </t>
               <t>
                  <ar>وَالعُلِمَاْءِ</ar>
               </t>
               <t>
                  <ar>أَنِّي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَعُوْذُ بِحَقْوِ خَاْلِكَ يَا ابْنَ عَمْرِو</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَعُوْذُ</ar>
               </t>
               <t>
                  <ar>بِحَقْوِ</ar>
               </t>
               <t>
                  <ar>خَاْلِكَ</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>ابْنَ</ar>
               </t>
               <t>
                  <ar>عَمْرِو</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
