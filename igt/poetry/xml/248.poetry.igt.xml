<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="248">
   <verses id="٥٨٧٥٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَلَى حِيْنَ مَنْ تَلْبَثْ عَلَيْهِ ذَنُوْبُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>حِيْنَ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>تَلْبَثْ</ar>
               </t>
               <t>
                  <ar>عَلَيْهِ</ar>
               </t>
               <t>
                  <ar>ذَنُوْبُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>يَرِثْ شِرْبُهُ إِذْ فِي الْمَقَاْمِ تَدَاْبُرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَرِثْ</ar>
               </t>
               <t>
                  <ar>شِرْبُهُ</ar>
               </t>
               <t>
                  <ar>إِذْ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>الْمَقَاْمِ</ar>
               </t>
               <t>
                  <ar>تَدَاْبُرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٣٥٥٣" poet="ابْنُ مُقْبِلٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَقِدْرٍ كَكَفِّ الْقِرْدِ لَا مُسْتَعِيْرُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَقِدْرٍ</ar>
               </t>
               <t>
                  <ar>كَكَفِّ</ar>
               </t>
               <t>
                  <ar>الْقِرْدِ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>مُسْتَعِيْرُهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>يُعَاْرُ وَلَا مَنْ يَأْتِهَا يَتَدَسَّمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يُعَاْرُ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>يَأْتِهَا</ar>
               </t>
               <t>
                  <ar>يَتَدَسَّمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٠٧٨١" poet="طَرْفَةُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَسْتُ بِحَلَّاْلِ التِّلَاْلِ مَخَاْفَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَسْتُ</ar>
               </t>
               <t>
                  <ar>بِحَلَّاْلِ</ar>
               </t>
               <t>
                  <ar>التِّلَاْلِ</ar>
               </t>
               <t>
                  <ar>مَخَاْفَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ولَكِنْ مَتَى يَسْتَرْفِدِ الْقَوْمُ أَرْفِدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ولَكِنْ</ar>
               </t>
               <t>
                  <ar>مَتَى</ar>
               </t>
               <t>
                  <ar>يَسْتَرْفِدِ</ar>
               </t>
               <t>
                  <ar>الْقَوْمُ</ar>
               </t>
               <t>
                  <ar>أَرْفِدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٧٦٩٢" poet="لْعُجَيْرُ السُّلُوْلِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَمَا ذَاْكَ أَنْ كَاْنَ ابْنَ عَمِيّ وَلَا أَخِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>ذَاْكَ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>كَاْنَ</ar>
               </t>
               <t>
                  <ar>ابْنَ</ar>
               </t>
               <t>
                  <ar>عَمِيّ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>أَخِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَكِنْ مَتَى مَا أَمْلِكِ الضُّرَّ أَنْفَعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَكِنْ</ar>
               </t>
               <t>
                  <ar>مَتَى</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَمْلِكِ</ar>
               </t>
               <t>
                  <ar>الضُّرَّ</ar>
               </t>
               <t>
                  <ar>أَنْفَعُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
