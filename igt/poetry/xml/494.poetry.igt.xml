<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="494">
   <verses id="٠١٥٧٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>بِبَاْزِلٍ وَجْنَاْءَ أَوْ عَيْهَلِّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِبَاْزِلٍ</ar>
               </t>
               <t>
                  <ar>وَجْنَاْءَ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>عَيْهَلِّ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٤١٥٦" poet="رُؤْبَةُ">
      <verse>
         <hemistiche>
            <text>
               <ar>لَقَدْ خَشِيْتُ أَنْ أَرَى جَدَبَّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَقَدْ</ar>
               </t>
               <t>
                  <ar>خَشِيْتُ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>أَرَى</ar>
               </t>
               <t>
                  <ar>جَدَبَّا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فِي عَاْمِنَا ذَا بَعْدَ مَا أَخْصَبَّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>عَاْمِنَا</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَخْصَبَّا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٢٠٩٩" poet="رُؤْبَةُ">
      <verse>
         <hemistiche>
            <text>
               <ar>بَدْءٌ يُحِبُّ الْخُلُقَ الْأَضْخَمَّا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بَدْءٌ</ar>
               </t>
               <t>
                  <ar>يُحِبُّ</ar>
               </t>
               <t>
                  <ar>الْخُلُقَ</ar>
               </t>
               <t>
                  <ar>الْأَضْخَمَّا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
