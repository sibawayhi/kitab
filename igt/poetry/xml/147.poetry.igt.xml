<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="147">
   <verses id="٢٧٩٩٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا صَاْحِ يَاْ ذَا الضَّاْمِرُ الْعَنْسِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>صَاْحِ</ar>
               </t>
               <t>
                  <ar>يَاْ</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>الضَّاْمِرُ</ar>
               </t>
               <t>
                  <ar>الْعَنْسِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَاْلرَّحْلِ ذِي الأَنْسَاْعِ وَالْحِلْسِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَاْلرَّحْلِ</ar>
               </t>
               <t>
                  <ar>ذِي</ar>
               </t>
               <t>
                  <ar>الأَنْسَاْعِ</ar>
               </t>
               <t>
                  <ar>وَالْحِلْسِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٩٠٧١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا ذَا الْمُخَوِّفُنَا بِمَقْتَلِ شَيْخِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>الْمُخَوِّفُنَا</ar>
               </t>
               <t>
                  <ar>بِمَقْتَلِ</ar>
               </t>
               <t>
                  <ar>شَيْخِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>حُجْرٍ تَمَنِّيَ صَاْحِبِ الأَحْلاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حُجْرٍ</ar>
               </t>
               <t>
                  <ar>تَمَنِّيَ</ar>
               </t>
               <t>
                  <ar>صَاْحِبِ</ar>
               </t>
               <t>
                  <ar>الأَحْلاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٤٥٢٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا أَيُّهَا الجَاْهِلُ ذُو التَّنزِّي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>أَيُّهَا</ar>
               </t>
               <t>
                  <ar>الجَاْهِلُ</ar>
               </t>
               <t>
                  <ar>ذُو</ar>
               </t>
               <t>
                  <ar>التَّنزِّي</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٠٩٦٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلا أَيُّهَا ذَا الْمَنْزِلُ الدَّاْرِسُ الَّذِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلا</ar>
               </t>
               <t>
                  <ar>أَيُّهَا</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>الْمَنْزِلُ</ar>
               </t>
               <t>
                  <ar>الدَّاْرِسُ</ar>
               </t>
               <t>
                  <ar>الَّذِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَأَنَّكَ لَمْ يَعْهَدْ بِكَ الَحَيَّ عَاْهِدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَأَنَّكَ</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>يَعْهَدْ</ar>
               </t>
               <t>
                  <ar>بِكَ</ar>
               </t>
               <t>
                  <ar>الَحَيَّ</ar>
               </t>
               <t>
                  <ar>عَاْهِدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
