<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="055">
   <verses id="١٥٣٤٩" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>إِيَّاْكَ أَنْتَ وَعَبْدَ الْمَسِيْحِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِيَّاْكَ</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>وَعَبْدَ</ar>
               </t>
               <t>
                  <ar>الْمَسِيْحِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَنْ تَقْرَبَا قِبْلَةَ الْمَسْجِدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>تَقْرَبَا</ar>
               </t>
               <t>
                  <ar>قِبْلَةَ</ar>
               </t>
               <t>
                  <ar>الْمَسْجِدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٠٢٠٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِيَّاْكَ إِيَّاْكَ الْمِرَاْءَ فَإِنَّهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِيَّاْكَ</ar>
               </t>
               <t>
                  <ar>إِيَّاْكَ</ar>
               </t>
               <t>
                  <ar>الْمِرَاْءَ</ar>
               </t>
               <t>
                  <ar>فَإِنَّهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إِلَى الشَّرِّ دَعَّاْءٌ وَلِلشَّرِّ جَاْلِبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِلَى</ar>
               </t>
               <t>
                  <ar>الشَّرِّ</ar>
               </t>
               <t>
                  <ar>دَعَّاْءٌ</ar>
               </t>
               <t>
                  <ar>وَلِلشَّرِّ</ar>
               </t>
               <t>
                  <ar>جَاْلِبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
