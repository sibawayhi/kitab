<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="506">
   <verses id="٤٦٢٩١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>رُحْتِ وَفِي رِجْلَيْكِ مَا فِيْهِمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>رُحْتِ</ar>
               </t>
               <t>
                  <ar>وَفِي</ar>
               </t>
               <t>
                  <ar>رِجْلَيْكِ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>فِيْهِمَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَقَدْ بَدَا هَنْكِ مِنَ الْمَئْزَرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَقَدْ</ar>
               </t>
               <t>
                  <ar>بَدَا</ar>
               </t>
               <t>
                  <ar>هَنْكِ</ar>
               </t>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>الْمَئْزَرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢١٣٢١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا اعْوَجَجْنَ قُلْتُ صَاْحِبْ قَوِّمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>اعْوَجَجْنَ</ar>
               </t>
               <t>
                  <ar>قُلْتُ</ar>
               </t>
               <t>
                  <ar>صَاْحِبْ</ar>
               </t>
               <t>
                  <ar>قَوِّمِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بَاْلُدَوِّ أَمْثَاْلَ السَّفِيْنِ الْعُوّمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بَاْلُدَوِّ</ar>
               </t>
               <t>
                  <ar>أَمْثَاْلَ</ar>
               </t>
               <t>
                  <ar>السَّفِيْنِ</ar>
               </t>
               <t>
                  <ar>الْعُوّمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٥٤٥٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَالْيَوْمَ أَشْرَبْ غَيْرَ مُسْتَحِقِبٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَالْيَوْمَ</ar>
               </t>
               <t>
                  <ar>أَشْرَبْ</ar>
               </t>
               <t>
                  <ar>غَيْرَ</ar>
               </t>
               <t>
                  <ar>مُسْتَحِقِبٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إثَمًا مِنْ اللَّهِ وَلَا وَاغْلٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إثَمًا</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>اللَّهِ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>وَاغْلٍ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
