<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="305">
   <verses id="٦٣١٨٩" poet="اْمْرُؤُ الْقَيْسِ">
      <verse>
         <hemistiche>
            <text>
               <ar>أَحَاْرِ أُرِيْكَ بَرْقًا هَبَّ وَهْنًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَحَاْرِ</ar>
               </t>
               <t>
                  <ar>أُرِيْكَ</ar>
               </t>
               <t>
                  <ar>بَرْقًا</ar>
               </t>
               <t>
                  <ar>هَبَّ</ar>
               </t>
               <t>
                  <ar>وَهْنًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَنَاْرِ مَجُوْسَ تَسْتَعِرُ اسْتِعَاْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَنَاْرِ</ar>
               </t>
               <t>
                  <ar>مَجُوْسَ</ar>
               </t>
               <t>
                  <ar>تَسْتَعِرُ</ar>
               </t>
               <t>
                  <ar>اسْتِعَاْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٩٦٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أُوْلَئِكَ أَوْلَى مِنْ يَهُوْدَ بِمَدْحَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أُوْلَئِكَ</ar>
               </t>
               <t>
                  <ar>أَوْلَى</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>يَهُوْدَ</ar>
               </t>
               <t>
                  <ar>بِمَدْحَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إِذَا أَنْتَ يَوْمًا قُلْتَهَا لَمْ تُؤَنَّبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>يَوْمًا</ar>
               </t>
               <t>
                  <ar>قُلْتَهَا</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>تُؤَنَّبِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥١١٦٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>صَدَّتْ كَمَا صَدَّ عَمَّا لَا يَحِلُّ لَهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>صَدَّتْ</ar>
               </t>
               <t>
                  <ar>كَمَا</ar>
               </t>
               <t>
                  <ar>صَدَّ</ar>
               </t>
               <t>
                  <ar>عَمَّا</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>يَحِلُّ</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>سَاْقِي نَصَاْرَى قُبَيْلَ الْفِصْحِ صُوَّاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سَاْقِي</ar>
               </t>
               <t>
                  <ar>نَصَاْرَى</ar>
               </t>
               <t>
                  <ar>قُبَيْلَ</ar>
               </t>
               <t>
                  <ar>الْفِصْحِ</ar>
               </t>
               <t>
                  <ar>صُوَّاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٨٨٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَكِلْتَاْهُمَا خَرَّتْ وَأَسْجَدَ رَأْسُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَكِلْتَاْهُمَا</ar>
               </t>
               <t>
                  <ar>خَرَّتْ</ar>
               </t>
               <t>
                  <ar>وَأَسْجَدَ</ar>
               </t>
               <t>
                  <ar>رَأْسُهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَمَا سَجَدَتْ نَصْرَاْنَةٌ لَمْ تُحَنَّفِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَمَا</ar>
               </t>
               <t>
                  <ar>سَجَدَتْ</ar>
               </t>
               <t>
                  <ar>نَصْرَاْنَةٌ</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>تُحَنَّفِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
