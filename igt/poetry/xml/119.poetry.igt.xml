<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="119">
   <verses id="٧٠٦٤٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>مَنْ يَكُ ذَا بَتٍّ فَهٰذَا بَتِّي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>يَكُ</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>بَتٍّ</ar>
               </t>
               <t>
                  <ar>فَهٰذَا</ar>
               </t>
               <t>
                  <ar>بَتِّي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مُقَيِّظٌ مُصَيِّفٌ مُشَتِّي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُقَيِّظٌ</ar>
               </t>
               <t>
                  <ar>مُصَيِّفٌ</ar>
               </t>
               <t>
                  <ar>مُشَتِّي</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤١٦٠٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَقَدْ أَبِيْتُ مِنَ الْفَتَاْةِ بِمَنْزِلٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَقَدْ</ar>
               </t>
               <t>
                  <ar>أَبِيْتُ</ar>
               </t>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>الْفَتَاْةِ</ar>
               </t>
               <t>
                  <ar>بِمَنْزِلٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَأَبِيْتُ لَا حَرَجٌ وَلَا مَحْرُوْمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَبِيْتُ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>حَرَجٌ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>مَحْرُوْمُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٤٤٥١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَلَى حِيْنَ أنْ كَاْنَتْ عُقَيْلٌ وَشِاْئِظًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>حِيْنَ</ar>
               </t>
               <t>
                  <ar>أنْ</ar>
               </t>
               <t>
                  <ar>كَاْنَتْ</ar>
               </t>
               <t>
                  <ar>عُقَيْلٌ</ar>
               </t>
               <t>
                  <ar>وَشِاْئِظًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وكَاْنَتْ كِلاْبٌ خَاْمِرِي أُمَّ عَاْمِرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وكَاْنَتْ</ar>
               </t>
               <t>
                  <ar>كِلاْبٌ</ar>
               </t>
               <t>
                  <ar>خَاْمِرِي</ar>
               </t>
               <t>
                  <ar>أُمَّ</ar>
               </t>
               <t>
                  <ar>عَاْمِرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٠٤٦٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>كَذَبْتُمْ وَبَيْتِ اللهُِ لَا تَنْكِحُوْنَها</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَذَبْتُمْ</ar>
               </t>
               <t>
                  <ar>وَبَيْتِ</ar>
               </t>
               <t>
                  <ar>اللهُِ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَنْكِحُوْنَها</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بَنِي شَاْبَ قَرْناْهَا تَصُرُّ وَتَحْلُبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بَنِي</ar>
               </t>
               <t>
                  <ar>شَاْبَ</ar>
               </t>
               <t>
                  <ar>قَرْناْهَا</ar>
               </t>
               <t>
                  <ar>تَصُرُّ</ar>
               </t>
               <t>
                  <ar>وَتَحْلُبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
