<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="104">
   <verses id="١٩٤٥٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَإِلَى ابْنِ أُمِّ أُنَاْسٍ أَرْحَلُ نَاْقَتِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِلَى</ar>
               </t>
               <t>
                  <ar>ابْنِ</ar>
               </t>
               <t>
                  <ar>أُمِّ</ar>
               </t>
               <t>
                  <ar>أُنَاْسٍ</ar>
               </t>
               <t>
                  <ar>أَرْحَلُ</ar>
               </t>
               <t>
                  <ar>نَاْقَتِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَمْرٍو فَتُبْلِغَ حَاْجَتِي أَوْ تُزْحِفُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَمْرٍو</ar>
               </t>
               <t>
                  <ar>فَتُبْلِغَ</ar>
               </t>
               <t>
                  <ar>حَاْجَتِي</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>تُزْحِفُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>مَلِكٍ إِذَا نَزَلَ الْوُفُوْدُ بِبَاْبِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَلِكٍ</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>نَزَلَ</ar>
               </t>
               <t>
                  <ar>الْوُفُوْدُ</ar>
               </t>
               <t>
                  <ar>بِبَاْبِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَرَفُوْا مَوَاْرِدَ مُزْبِدٍ لَا يُنْزَفُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَرَفُوْا</ar>
               </t>
               <t>
                  <ar>مَوَاْرِدَ</ar>
               </t>
               <t>
                  <ar>مُزْبِدٍ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>يُنْزَفُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٧٠٨٢" poet="الْفَرَزْدَقُ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَأَصْبَحَ فِي حَيْثُ الْتَقَيْنَا شَرِيْدُهُمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَصْبَحَ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>حَيْثُ</ar>
               </t>
               <t>
                  <ar>الْتَقَيْنَا</ar>
               </t>
               <t>
                  <ar>شَرِيْدُهُمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>طَلِيْقٌ وَمَكْتُوْفُ الْيَدَيْنِ وَمُزْعَفُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>طَلِيْقٌ</ar>
               </t>
               <t>
                  <ar>وَمَكْتُوْفُ</ar>
               </t>
               <t>
                  <ar>الْيَدَيْنِ</ar>
               </t>
               <t>
                  <ar>وَمُزْعَفُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٧٨٧٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَا تَجْعَلِي ضَيْفَيَّ ضَيْفٌ مُقَرَّبٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَا</ar>
               </t>
               <t>
                  <ar>تَجْعَلِي</ar>
               </t>
               <t>
                  <ar>ضَيْفَيَّ</ar>
               </t>
               <t>
                  <ar>ضَيْفٌ</ar>
               </t>
               <t>
                  <ar>مُقَرَّبٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَآخَرَ مَعْزُوْلٌ عَنْ الْبَيْتِ جَاْنِبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَآخَرَ</ar>
               </t>
               <t>
                  <ar>مَعْزُوْلٌ</ar>
               </t>
               <t>
                  <ar>عَنْ</ar>
               </t>
               <t>
                  <ar>الْبَيْتِ</ar>
               </t>
               <t>
                  <ar>جَاْنِبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٠٢٠٢" poet="النَّاْبِغَةُ الْجَعْدِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَكَاْنَتْ قُشَيْرٌ شَاْمِتًا بِصَدِيْقِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَكَاْنَتْ</ar>
               </t>
               <t>
                  <ar>قُشَيْرٌ</ar>
               </t>
               <t>
                  <ar>شَاْمِتًا</ar>
               </t>
               <t>
                  <ar>بِصَدِيْقِهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَآخَرَ مَرْزِيًّا وَآخَرَ رَاْزِيَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَآخَرَ</ar>
               </t>
               <t>
                  <ar>مَرْزِيًّا</ar>
               </t>
               <t>
                  <ar>وَآخَرَ</ar>
               </t>
               <t>
                  <ar>رَاْزِيَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٠٨٦٩" poet="ذُو الرُّمَّةِ">
      <verse>
         <hemistiche>
            <text>
               <ar>تَرَى خَلْقَهَا نِصْفٌ قَنَاْةٌ قَوِيْمَةٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَرَى</ar>
               </t>
               <t>
                  <ar>خَلْقَهَا</ar>
               </t>
               <t>
                  <ar>نِصْفٌ</ar>
               </t>
               <t>
                  <ar>قَنَاْةٌ</ar>
               </t>
               <t>
                  <ar>قَوِيْمَةٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَنِصْفٌ نَقًا يَرْتَجُّ أَوْ يَتَمَرْمَرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَنِصْفٌ</ar>
               </t>
               <t>
                  <ar>نَقًا</ar>
               </t>
               <t>
                  <ar>يَرْتَجُّ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>يَتَمَرْمَرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
