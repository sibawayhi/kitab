<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="045">
   <verses id="٨٢٨٥٢" poet="الرَّاْعِي">
      <verse>
         <hemistiche>
            <text>
               <ar>نَظَّاْرَةً حِيْنَ تَعْلُو الشَّمْسُ رَاْكِبَهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نَظَّاْرَةً</ar>
               </t>
               <t>
                  <ar>حِيْنَ</ar>
               </t>
               <t>
                  <ar>تَعْلُو</ar>
               </t>
               <t>
                  <ar>الشَّمْسُ</ar>
               </t>
               <t>
                  <ar>رَاْكِبَهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>طَرْحًا بَعَيْنَيْ لِيَاْحٍ فِيْهِ تَحْدِيْدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>طَرْحًا</ar>
               </t>
               <t>
                  <ar>بَعَيْنَيْ</ar>
               </t>
               <t>
                  <ar>لِيَاْحٍ</ar>
               </t>
               <t>
                  <ar>فِيْهِ</ar>
               </t>
               <t>
                  <ar>تَحْدِيْدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٧٩١٠" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَمْ تَعْلَمْ مُسَرَّحَي الْقَوَاْفِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَمْ</ar>
               </t>
               <t>
                  <ar>تَعْلَمْ</ar>
               </t>
               <t>
                  <ar>مُسَرَّحَي</ar>
               </t>
               <t>
                  <ar>الْقَوَاْفِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَلَا عِيًّا بِهِنَّ وَلَا اجْتِلَاْبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَا</ar>
               </t>
               <t>
                  <ar>عِيًّا</ar>
               </t>
               <t>
                  <ar>بِهِنَّ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>اجْتِلَاْبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٤٧٢٤" poet="ابْنُ أَحْمَرَ">
      <verse>
         <hemistiche>
            <text>
               <ar>تَداْرَكْنَ حَيًّا مِنْ نُمَيْرِ بْنِ عَاْمِرٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَداْرَكْنَ</ar>
               </t>
               <t>
                  <ar>حَيًّا</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>نُمَيْرِ</ar>
               </t>
               <t>
                  <ar>بْنِ</ar>
               </t>
               <t>
                  <ar>عَاْمِرٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أُسَاْرَى تُسَاْمُ الذُّلَّ قَتْلًا وَمَحْرَبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أُسَاْرَى</ar>
               </t>
               <t>
                  <ar>تُسَاْمُ</ar>
               </t>
               <t>
                  <ar>الذُّلَّ</ar>
               </t>
               <t>
                  <ar>قَتْلًا</ar>
               </t>
               <t>
                  <ar>وَمَحْرَبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٦٦٣٩" poet="حُمَيْدُ بْنُ ثَوْرٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَمَا هِيَ إِلَّا فِي إِزَاْرٍ وَعِلْقَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>هِيَ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>إِزَاْرٍ</ar>
               </t>
               <t>
                  <ar>وَعِلْقَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مُغَاْرَ ابْنِ هَمَّاْمٍ عَلَى حَيِّ خَثْعَمًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُغَاْرَ</ar>
               </t>
               <t>
                  <ar>ابْنِ</ar>
               </t>
               <t>
                  <ar>هَمَّاْمٍ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>حَيِّ</ar>
               </t>
               <t>
                  <ar>خَثْعَمًا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
