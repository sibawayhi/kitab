   <verses id="٢١٠٨٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>سَرَيْتُ بِهِمْ حَتَّى تَكَّلَ مَطِيُّهُمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سَرَيْتُ</ar>
               </t>
               <t>
                  <ar>بِهِمْ</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>تَكَّلَ</ar>
               </t>
               <t>
                  <ar>مَطِيُّهُمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وحَتَّى الْجِيَاْدُ مَا يُقَدْنَ بِأَرْسَاْنِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وحَتَّى</ar>
               </t>
               <t>
                  <ar>الْجِيَاْدُ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>يُقَدْنَ</ar>
               </t>
               <t>
                  <ar>بِأَرْسَاْنِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
