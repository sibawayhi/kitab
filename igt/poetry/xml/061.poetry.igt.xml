<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="061">
   <verses id="٩٩٣٦٢" poet="ابْنُ مَيَّاْدَةَ">
      <verse>
         <hemistiche>
            <text>
               <ar>تَفَاْقَدَ قَوْمِى إِذْ يَبِيْعُوْنَ مُهْجَتِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَفَاْقَدَ</ar>
               </t>
               <t>
                  <ar>قَوْمِى</ar>
               </t>
               <t>
                  <ar>إِذْ</ar>
               </t>
               <t>
                  <ar>يَبِيْعُوْنَ</ar>
               </t>
               <t>
                  <ar>مُهْجَتِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِجَاْرِيَةٍ بَهْرًا لَهُمْ بَعْدَهَا بَهْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِجَاْرِيَةٍ</ar>
               </t>
               <t>
                  <ar>بَهْرًا</ar>
               </t>
               <t>
                  <ar>لَهُمْ</ar>
               </t>
               <t>
                  <ar>بَعْدَهَا</ar>
               </t>
               <t>
                  <ar>بَهْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٢٠٨٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>ثُمَّ قَاْلُوْا تُحِبُّهَا قُلْتُ بَهْرًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ثُمَّ</ar>
               </t>
               <t>
                  <ar>قَاْلُوْا</ar>
               </t>
               <t>
                  <ar>تُحِبُّهَا</ar>
               </t>
               <t>
                  <ar>قُلْتُ</ar>
               </t>
               <t>
                  <ar>بَهْرًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَدَدَ النَّجْمِ وَالْحَصَى وَالتُّرَاْبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَدَدَ</ar>
               </t>
               <t>
                  <ar>النَّجْمِ</ar>
               </t>
               <t>
                  <ar>وَالْحَصَى</ar>
               </t>
               <t>
                  <ar>وَالتُّرَاْبِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٣١٨٦" poet="أَبُو زُبَيْدٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>أَقَاْمَ وَأَقْوَى ذَاْتَ يَوْمٍ وَخَيْبَةٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَقَاْمَ</ar>
               </t>
               <t>
                  <ar>وَأَقْوَى</ar>
               </t>
               <t>
                  <ar>ذَاْتَ</ar>
               </t>
               <t>
                  <ar>يَوْمٍ</ar>
               </t>
               <t>
                  <ar>وَخَيْبَةٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لِأَوَّلِ مَنْ يَلْقَى وَشَر مُيَسَّرٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لِأَوَّلِ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>يَلْقَى</ar>
               </t>
               <t>
                  <ar>وَشَر</ar>
               </t>
               <t>
                  <ar>مُيَسَّرٌ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٤٧٠٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَذِيْرُكَ مِنْ مَوْلًى إِذَا نِمْتَ لَمْ يَنَمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَذِيْرُكَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>مَوْلًى</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>نِمْتَ</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>يَنَمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>يَقُوْلُ الْخَنَا أَوْ تَعْتَرِيْكَ زَنَاْبِرُهْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَقُوْلُ</ar>
               </t>
               <t>
                  <ar>الْخَنَا</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>تَعْتَرِيْكَ</ar>
               </t>
               <t>
                  <ar>زَنَاْبِرُهْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٩٢٧٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَهَاْجَيْتُمُ حَسَّاْنَ عِنْدَ ذَكَاْئِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَهَاْجَيْتُمُ</ar>
               </t>
               <t>
                  <ar>حَسَّاْنَ</ar>
               </t>
               <t>
                  <ar>عِنْدَ</ar>
               </t>
               <t>
                  <ar>ذَكَاْئِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَـغَيٌّ لَأَوْلَاْدِ الْحِمَاْسِ طَوِيْلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَـغَيٌّ</ar>
               </t>
               <t>
                  <ar>لَأَوْلَاْدِ</ar>
               </t>
               <t>
                  <ar>الْحِمَاْسِ</ar>
               </t>
               <t>
                  <ar>طَوِيْلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
