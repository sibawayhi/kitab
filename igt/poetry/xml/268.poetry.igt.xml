<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="268">
   <verses id="٢٦٤٠٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَحَقَّا بَنِيِ أَبْنَاْءِ سَلْمَى بْنِ جَنْدَلٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَحَقَّا</ar>
               </t>
               <t>
                  <ar>بَنِيِ</ar>
               </t>
               <t>
                  <ar>أَبْنَاْءِ</ar>
               </t>
               <t>
                  <ar>سَلْمَى</ar>
               </t>
               <t>
                  <ar>بْنِ</ar>
               </t>
               <t>
                  <ar>جَنْدَلٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تَهْدُّدُكُمْ إيَّاْيَ وَسْطَ الْمُجَاْلِسِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَهْدُّدُكُمْ</ar>
               </t>
               <t>
                  <ar>إيَّاْيَ</ar>
               </t>
               <t>
                  <ar>وَسْطَ</ar>
               </t>
               <t>
                  <ar>الْمُجَاْلِسِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٥٨٢٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَحَقَّا أَنَّ جِيْرَتَنَا اسْتَقّلَوَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَحَقَّا</ar>
               </t>
               <t>
                  <ar>أَنَّ</ar>
               </t>
               <t>
                  <ar>جِيْرَتَنَا</ar>
               </t>
               <t>
                  <ar>اسْتَقّلَوَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَنِيَّتُنَا وَنِيَّتُهُمْ فَرَيِقُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَنِيَّتُنَا</ar>
               </t>
               <t>
                  <ar>وَنِيَّتُهُمْ</ar>
               </t>
               <t>
                  <ar>فَرَيِقُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٧٢٩٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَأَلْحَقَّ أَنْ دَاْرُ الرَّبَاْبِ تُبَاْعِدْتْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَأَلْحَقَّ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>دَاْرُ</ar>
               </t>
               <t>
                  <ar>الرَّبَاْبِ</ar>
               </t>
               <t>
                  <ar>تُبَاْعِدْتْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أُوِ اُنْبُتَّ حَبْلٌ أَنَّ قَلْبَكَ طَاْئِرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أُوِ</ar>
               </t>
               <t>
                  <ar>اُنْبُتَّ</ar>
               </t>
               <t>
                  <ar>حَبْلٌ</ar>
               </t>
               <t>
                  <ar>أَنَّ</ar>
               </t>
               <t>
                  <ar>قَلْبَكَ</ar>
               </t>
               <t>
                  <ar>طَاْئِرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٩٤٩٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَا أَبْلِغْ بَنِي خَلَفٍ رَسُوْلَاًْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَا</ar>
               </t>
               <t>
                  <ar>أَبْلِغْ</ar>
               </t>
               <t>
                  <ar>بَنِي</ar>
               </t>
               <t>
                  <ar>خَلَفٍ</ar>
               </t>
               <t>
                  <ar>رَسُوْلَاًْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَحَقّاًْ أَنّ أَخْطَلَكُمْ هَجَاْنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَحَقّاًْ</ar>
               </t>
               <t>
                  <ar>أَنّ</ar>
               </t>
               <t>
                  <ar>أَخْطَلَكُمْ</ar>
               </t>
               <t>
                  <ar>هَجَاْنِي</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٦١٧٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَقْد طَعْنُتَ أَبا عُيَيْنَةَ طَعْنَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَقْد</ar>
               </t>
               <t>
                  <ar>طَعْنُتَ</ar>
               </t>
               <t>
                  <ar>أَبا</ar>
               </t>
               <t>
                  <ar>عُيَيْنَةَ</ar>
               </t>
               <t>
                  <ar>طَعْنَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>جَرَمْتْ فَزاَْرَةَ بْعَدَها أْنْ يَغْضَبُوْاٍْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>جَرَمْتْ</ar>
               </t>
               <t>
                  <ar>فَزاَْرَةَ</ar>
               </t>
               <t>
                  <ar>بْعَدَها</ar>
               </t>
               <t>
                  <ar>أْنْ</ar>
               </t>
               <t>
                  <ar>يَغْضَبُوْاٍْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٢٢٦٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>قُروُمٍ تَساَْمَى عْنَد باِْبٍ دَفِاِْعُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قُروُمٍ</ar>
               </t>
               <t>
                  <ar>تَساَْمَى</ar>
               </t>
               <t>
                  <ar>عْنَد</ar>
               </t>
               <t>
                  <ar>باِْبٍ</ar>
               </t>
               <t>
                  <ar>دَفِاِْعُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَأْنْ يُؤْخّذُ اْلَمْرُء اْلَكِريُمُ فَيُقْتَلَاَْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَأْنْ</ar>
               </t>
               <t>
                  <ar>يُؤْخّذُ</ar>
               </t>
               <t>
                  <ar>اْلَمْرُء</ar>
               </t>
               <t>
                  <ar>اْلَكِريُمُ</ar>
               </t>
               <t>
                  <ar>فَيُقْتَلَاَْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٠٣٨٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وِإَّن مْن خِريٍف فَلْن يْعَدَماَْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وِإَّن</ar>
               </t>
               <t>
                  <ar>مْن</ar>
               </t>
               <t>
                  <ar>خِريٍف</ar>
               </t>
               <t>
                  <ar>فَلْن</ar>
               </t>
               <t>
                  <ar>يْعَدَماَْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
