<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="062">
   <verses id="٤٤٧٢١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَقَدْ أَلَبَ الْوَاْشُوْنَ أَلْبًا لِبَيْنِهِمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَقَدْ</ar>
               </t>
               <t>
                  <ar>أَلَبَ</ar>
               </t>
               <t>
                  <ar>الْوَاْشُوْنَ</ar>
               </t>
               <t>
                  <ar>أَلْبًا</ar>
               </t>
               <t>
                  <ar>لِبَيْنِهِمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَتُرْبٌ لِأَفْوَاْهِ الْوُشَاْةِ وَجَنْدَلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَتُرْبٌ</ar>
               </t>
               <t>
                  <ar>لِأَفْوَاْهِ</ar>
               </t>
               <t>
                  <ar>الْوُشَاْةِ</ar>
               </t>
               <t>
                  <ar>وَجَنْدَلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٢٨٨٩" poet="أَبُو سِدْرَةَ الْهُجَمِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>تَحسَّبَ هَوَّاْسٌ وَأَقْبَلَ أَنّني</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَحسَّبَ</ar>
               </t>
               <t>
                  <ar>هَوَّاْسٌ</ar>
               </t>
               <t>
                  <ar>وَأَقْبَلَ</ar>
               </t>
               <t>
                  <ar>أَنّني</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِهَا مُفْتَدٍ مِنْ وَاْحِدٍ لَا أُغَاْمِرُهْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِهَا</ar>
               </t>
               <t>
                  <ar>مُفْتَدٍ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>وَاْحِدٍ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>أُغَاْمِرُهْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>فَقُلْتُ لَهُ فَاْهَا لِفِيْكَ فَإِنَّهُا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقُلْتُ</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>فَاْهَا</ar>
               </t>
               <t>
                  <ar>لِفِيْكَ</ar>
               </t>
               <t>
                  <ar>فَإِنَّهُا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>قَلُوْصُ امْرِئٍ قَاْرِيْكَ مَا أَنْتَ حَاْذِرُهْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَلُوْصُ</ar>
               </t>
               <t>
                  <ar>امْرِئٍ</ar>
               </t>
               <t>
                  <ar>قَاْرِيْكَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>حَاْذِرُهْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٢٧٩١" poet="عَاْمِرُ بْنُ الْأَحْوَصِ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَدَاْهِيَةٍ مِنْ دَوَاْهِي الْمَنوْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَدَاْهِيَةٍ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>دَوَاْهِي</ar>
               </t>
               <t>
                  <ar>الْمَنوْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>نِ يَرْهَبُهَا النَّاْسُ لَا فَا لَهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نِ</ar>
               </t>
               <t>
                  <ar>يَرْهَبُهَا</ar>
               </t>
               <t>
                  <ar>النَّاْسُ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>فَا</ar>
               </t>
               <t>
                  <ar>لَهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
