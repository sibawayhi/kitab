         <hemistiche>
            <text>
               <ar>إِنْ تَرْكَبُوا فَرُكُوْبُ الَخْيِلِ عَاْدَتُنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنْ</ar>
               </t>
               <t>
                  <ar>تَرْكَبُوا</ar>
               </t>
               <t>
                  <ar>فَرُكُوْبُ</ar>
               </t>
               <t>
                  <ar>الَخْيِلِ</ar>
               </t>
               <t>
                  <ar>عَاْدَتُنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَوْ تَنْزِلُوْنَ فَإِنَّ مَعْشَرٌ نُزُلُ</ar>
               <free/>
