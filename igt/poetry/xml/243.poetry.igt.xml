<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="243">
   <verses id="٧٣٦٤٣" poet="امْرُؤُ الْقَيْسِ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَقُلْتُ لَهُ لَا تَبْكِ عَيْنُكَ إِنَّمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقُلْتُ</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَبْكِ</ar>
               </t>
               <t>
                  <ar>عَيْنُكَ</ar>
               </t>
               <t>
                  <ar>إِنَّمَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>نُحَاْوِلُ مُلْكًا أَوْ نَمُوْتَ فَنُعْذَرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نُحَاْوِلُ</ar>
               </t>
               <t>
                  <ar>مُلْكًا</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>نَمُوْتَ</ar>
               </t>
               <t>
                  <ar>فَنُعْذَرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤١٨٨٧" poet="ذُو الرُّمَّةِ">
      <verse>
         <hemistiche>
            <text>
               <ar>حَرَاْجِيْجُ لَا تَنْفَكُّ إِلَّا مُنُاْخَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حَرَاْجِيْجُ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَنْفَكُّ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>مُنُاْخَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَلَى الْخَسْفِ أَوْ نَرْمِي بِهَا بَلَدًا قَفْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الْخَسْفِ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>نَرْمِي</ar>
               </t>
               <t>
                  <ar>بِهَا</ar>
               </t>
               <t>
                  <ar>بَلَدًا</ar>
               </t>
               <t>
                  <ar>قَفْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٣٤٧٤" poet="زِيَاْدٌ الْأَعْجْمُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَكُنْتُ إِذَا غَمَزْتُ قَنَاْةَ قَوْمٍ</ar>
               <free/>
            </text>
            <igt>
