      </verse>
   </verses>
   <verses id="٥٣٩١٠" poet="طَرَفَةُ بْنُ الْعَبْدِ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَكِنَّ مَوْلَاْيَ امْرُؤٌ هُوَ خَاْنِقِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَكِنَّ</ar>
               </t>
               <t>
                  <ar>مَوْلَاْيَ</ar>
               </t>
               <t>
                  <ar>امْرُؤٌ</ar>
               </t>
               <t>
                  <ar>هُوَ</ar>
               </t>
               <t>
                  <ar>خَاْنِقِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَلَى الشُّكْرِ وَالتَّسْآلِ أَوْ أَنَا مُفْتَدِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الشُّكْرِ</ar>
