                  <ar>وَكُنْتُ</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>غَمَزْتُ</ar>
               </t>
               <t>
                  <ar>قَنَاْةَ</ar>
               </t>
               <t>
                  <ar>قَوْمٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَسَرْتُ كُعُوْبَهَا أَوْ تَسْتَقْيْمَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَسَرْتُ</ar>
