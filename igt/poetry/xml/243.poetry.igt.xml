   <verses id="٩٩٣٤٩" poet="عَمْرُو ابْنُ مَعْدِي كَرِبَ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَخَيْلٍ قَدْ دَلَفْتُ لَهَا بِخَيْلٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَخَيْلٍ</ar>
               </t>
               <t>
                  <ar>قَدْ</ar>
               </t>
               <t>
                  <ar>دَلَفْتُ</ar>
               </t>
               <t>
                  <ar>لَهَا</ar>
               </t>
               <t>
                  <ar>بِخَيْلٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تَحِيَّةُ بَيْنِهِمْ ضَرْبٌ وَجِيْعٌ</ar>
               <free/>
