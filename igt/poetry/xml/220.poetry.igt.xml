<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="220">
   <verses id="٨٣٦٢١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>تُبَكّىِ عَلَى لُبْنَى وَأَنْتَ تَرْكْتَهاٍْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تُبَكّىِ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>لُبْنَى</ar>
               </t>
               <t>
                  <ar>وَأَنْتَ</ar>
               </t>
               <t>
                  <ar>تَرْكْتَهاٍْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَكُنْتَ عَلَيْهَا باْلْمَلا أَنْتَ أْقْدَرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَكُنْتَ</ar>
               </t>
               <t>
                  <ar>عَلَيْهَا</ar>
               </t>
               <t>
                  <ar>باْلْمَلا</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>أْقْدَرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٣٠٨٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا مَا اْلَمْرْءُ كَاْنَ أَبُوُه عَبْسٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>اْلَمْرْءُ</ar>
               </t>
               <t>
                  <ar>كَاْنَ</ar>
               </t>
               <t>
                  <ar>أَبُوُه</ar>
               </t>
               <t>
                  <ar>عَبْسٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَحْسْبُك مَا تُرِيْدُ إَلَى اْلْكَلاِْمَ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَحْسْبُك</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>تُرِيْدُ</ar>
               </t>
               <t>
                  <ar>إَلَى</ar>
               </t>
               <t>
                  <ar>اْلْكَلاِْمَ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٣٢٨٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>مِتى مَا يُفِدْ كْسًبًا يُكْنْ كُلُّ كَسْبَهٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِتى</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>يُفِدْ</ar>
               </t>
               <t>
                  <ar>كْسًبًا</ar>
               </t>
               <t>
                  <ar>يُكْنْ</ar>
               </t>
               <t>
                  <ar>كُلُّ</ar>
               </t>
               <t>
                  <ar>كَسْبَهٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَهُ مَطْعَمٌ مِنْ صْدِرِ يَوْمٍ وَمَأْكَلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>مَطْعَمٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>صْدِرِ</ar>
               </t>
               <t>
                  <ar>يَوْمٍ</ar>
               </t>
               <t>
                  <ar>وَمَأْكَلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
