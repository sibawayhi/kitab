<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="501">
   <verses id="٣٠٣١٩" poet="النَّاْبِغَةُ">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا حَاْوَلْتَ فِي أَسَدٍ فُجُوْرًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>حَاْوَلْتَ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>أَسَدٍ</ar>
               </t>
               <t>
                  <ar>فُجُوْرًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنِّي لَسْتُ مِنْكَ وَلَسْتَ مِنْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنِّي</ar>
               </t>
               <t>
                  <ar>لَسْتُ</ar>
               </t>
               <t>
                  <ar>مِنْكَ</ar>
               </t>
               <t>
                  <ar>وَلَسْتَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٩٧٢٦" poet="النَّاْبِغَةُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَهُمْ وَرَدُوْا الْجِفَاْرَ عَلَى تَمِيْمٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَهُمْ</ar>
               </t>
               <t>
                  <ar>وَرَدُوْا</ar>
               </t>
               <t>
                  <ar>الْجِفَاْرَ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>تَمِيْمٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَهُمْ أَصْحَاْبُ يَوْمِ عُكَاْظَ إِنْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَهُمْ</ar>
               </t>
               <t>
                  <ar>أَصْحَاْبُ</ar>
               </t>
               <t>
                  <ar>يَوْمِ</ar>
               </t>
               <t>
                  <ar>عُكَاْظَ</ar>
               </t>
               <t>
                  <ar>إِنْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٩٢٧٠" poet="الأَعْشَى">
      <verse>
         <hemistiche>
            <text>
               <ar>فَهَلْ يَمْنَعَنِّي ارْتِيَاْدِي الْبِلَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَهَلْ</ar>
               </t>
               <t>
                  <ar>يَمْنَعَنِّي</ar>
               </t>
               <t>
                  <ar>ارْتِيَاْدِي</ar>
               </t>
               <t>
                  <ar>الْبِلَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>دَ مَنْ حَذَرِ الْمَوْتِ أَنْ يَأْتِيَنْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>دَ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>حَذَرِ</ar>
               </t>
               <t>
                  <ar>الْمَوْتِ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>يَأْتِيَنْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>وَمِنْ شَاْنِئٍ كَاْسِفٍ وَجْهُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمِنْ</ar>
               </t>
               <t>
                  <ar>شَاْنِئٍ</ar>
               </t>
               <t>
                  <ar>كَاْسِفٍ</ar>
               </t>
               <t>
                  <ar>وَجْهُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إِذَا مَا انْتَسَبْتُ لَهُ أَنْكَرَنْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>انْتَسَبْتُ</ar>
               </t>
               <t>
                  <ar>لَهُ</ar>
               </t>
               <t>
                  <ar>أَنْكَرَنْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٧٦٩٣" poet="زَيْدُ الْخَيْلِ">
      <verse>
         <hemistiche>
            <text>
               <ar>أَفِي كُلِّ عَاْمٍ مَأْتَمٌ تَبْعَثُوْنَهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَفِي</ar>
               </t>
               <t>
                  <ar>كُلِّ</ar>
               </t>
               <t>
                  <ar>عَاْمٍ</ar>
               </t>
               <t>
                  <ar>مَأْتَمٌ</ar>
               </t>
               <t>
                  <ar>تَبْعَثُوْنَهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَلَى مِحْمَرٍ ثَوَّبْتُمُوْهُ وَمَا رُضَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>مِحْمَرٍ</ar>
               </t>
               <t>
                  <ar>ثَوَّبْتُمُوْهُ</ar>
               </t>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>رُضَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٨٢٣٤" poet="طُفَيْلٌ الْغَنَموِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنَّ الْغَوِيَّ إِذَا نُهَا لَمْ يُعْتِبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>الْغَوِيَّ</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>نُهَا</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>يُعْتِبِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٣٨٠٣" poet="لَبِيْدٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَقَبِيْلٌ مِنْ لُكَيْزٍ شَاْهِدٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَقَبِيْلٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>لُكَيْزٍ</ar>
               </t>
               <t>
                  <ar>شَاْهِدٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>رَهْطُ مَرْجُوْمٍ وَرَهْطُ ابْنِ الْمُعَلّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>رَهْطُ</ar>
               </t>
               <t>
                  <ar>مَرْجُوْمٍ</ar>
               </t>
               <t>
                  <ar>وَرَهْطُ</ar>
               </t>
               <t>
                  <ar>ابْنِ</ar>
               </t>
               <t>
                  <ar>الْمُعَلّ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
