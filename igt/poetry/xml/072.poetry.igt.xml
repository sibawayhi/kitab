<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="072">
   <verses id="٥٨١٦٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَفي السِّلْمِ أَعْيَاْرًا جَفَاْءً وَغِلْظَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَفي</ar>
               </t>
               <t>
                  <ar>السِّلْمِ</ar>
               </t>
               <t>
                  <ar>أَعْيَاْرًا</ar>
               </t>
               <t>
                  <ar>جَفَاْءً</ar>
               </t>
               <t>
                  <ar>وَغِلْظَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَفِي الْحَرْبِ أَشْبَاْهَ الْإِمَاْءِ الْعَوَاْرِكِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَفِي</ar>
               </t>
               <t>
                  <ar>الْحَرْبِ</ar>
               </t>
               <t>
                  <ar>أَشْبَاْهَ</ar>
               </t>
               <t>
                  <ar>الْإِمَاْءِ</ar>
               </t>
               <t>
                  <ar>الْعَوَاْرِكِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٢١٤٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَفِي الْوَلَاْئِمِِ أَوْلَاْدًا لِوَاْحِدَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَفِي</ar>
               </t>
               <t>
                  <ar>الْوَلَاْئِمِِ</ar>
               </t>
               <t>
                  <ar>أَوْلَاْدًا</ar>
               </t>
               <t>
                  <ar>لِوَاْحِدَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَفِي الْعِيَاْدَةِ أَوْلَاْدًا لِعَلَّاْتِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَفِي</ar>
               </t>
               <t>
                  <ar>الْعِيَاْدَةِ</ar>
               </t>
               <t>
                  <ar>أَوْلَاْدًا</ar>
               </t>
               <t>
                  <ar>لِعَلَّاْتِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٤١٧٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَعَبْدًا حَلَّ في شُعَبَى غَرِيْبًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَعَبْدًا</ar>
               </t>
               <t>
                  <ar>حَلَّ</ar>
               </t>
               <t>
                  <ar>في</ar>
               </t>
               <t>
                  <ar>شُعَبَى</ar>
               </t>
               <t>
                  <ar>غَرِيْبًا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٠٥٨٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَلَى حَلْفَةٍ لَا أَشْتِمُ الدَّهْرَ مُسْلِمًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>حَلْفَةٍ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>أَشْتِمُ</ar>
               </t>
               <t>
                  <ar>الدَّهْرَ</ar>
               </t>
               <t>
                  <ar>مُسْلِمًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَا خَاْرِجًا مِنْ فِيّ زُوْرُ كَلَاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>خَاْرِجًا</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>فِيّ</ar>
               </t>
               <t>
                  <ar>زُوْرُ</ar>
               </t>
               <t>
                  <ar>كَلَاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٣٦٨٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَمْ تَرَنِى عَاْهَدْتُ رَبِّي وَإِنَّنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَمْ</ar>
               </t>
               <t>
                  <ar>تَرَنِى</ar>
               </t>
               <t>
                  <ar>عَاْهَدْتُ</ar>
               </t>
               <t>
                  <ar>رَبِّي</ar>
               </t>
               <t>
                  <ar>وَإِنَّنِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَبَيْنَ رِتَاْجٍ قَاْئِمًا وَمَقَاْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَبَيْنَ</ar>
               </t>
               <t>
                  <ar>رِتَاْجٍ</ar>
               </t>
               <t>
                  <ar>قَاْئِمًا</ar>
               </t>
               <t>
                  <ar>وَمَقَاْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
