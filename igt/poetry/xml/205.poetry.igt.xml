<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="205">
   <verses id="٠٩٨٤١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَـكَأَنَّهَا هِيَ بَعْدَ غِبِّ كَلَاْلِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَـكَأَنَّهَا</ar>
               </t>
               <t>
                  <ar>هِيَ</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>غِبِّ</ar>
               </t>
               <t>
                  <ar>كَلَاْلِهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَوْ أَسْفَعُ الْخَدَّيْنِ شَاْةُ إرَاْنِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>أَسْفَعُ</ar>
               </t>
               <t>
                  <ar>الْخَدَّيْنِ</ar>
               </t>
               <t>
                  <ar>شَاْةُ</ar>
               </t>
               <t>
                  <ar>إرَاْنِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦١١٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>قَدْ عَلِمَتْ سَلْمَى وَجَاْرَاْتُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَدْ</ar>
               </t>
               <t>
                  <ar>عَلِمَتْ</ar>
               </t>
               <t>
                  <ar>سَلْمَى</ar>
               </t>
               <t>
                  <ar>وَجَاْرَاْتُهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مَا قَطَّرَ الْفَاْرِسَ إِلَّا أَنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>قَطَّرَ</ar>
               </t>
               <t>
                  <ar>الْفَاْرِسَ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>أَنَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٢٦٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَنَحْنُ اقَتَسَمْنَا الْمَاْلَ نِصْفَيْنِ بَيْنَنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَنَحْنُ</ar>
               </t>
               <t>
                  <ar>اقَتَسَمْنَا</ar>
               </t>
               <t>
                  <ar>الْمَاْلَ</ar>
               </t>
               <t>
                  <ar>نِصْفَيْنِ</ar>
               </t>
               <t>
                  <ar>بَيْنَنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَقُلْتُ لَهُمْ هٰذَا لَهَا هَا وَذَا لِيَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقُلْتُ</ar>
               </t>
               <t>
                  <ar>لَهُمْ</ar>
               </t>
               <t>
                  <ar>هٰذَا</ar>
               </t>
               <t>
                  <ar>لَهَا</ar>
               </t>
               <t>
                  <ar>هَا</ar>
               </t>
               <t>
                  <ar>وَذَا</ar>
               </t>
               <t>
                  <ar>لِيَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
