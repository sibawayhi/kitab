<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="011">
   <verses id="٦٩١٢٨" nbr="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَسْتَغْفِرُ اللَّهَ ذَنْبًا لَسْتُ مُحْصِيَه</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَسْتَغْفِرُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>اللَّهَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>ذَنْبًا</ar>
                  <en/>
               </t>
               <t>
                  <ar>لَسْتُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مُحْصِيَه</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>رَبَّ الْعِبَاْدِ إِلَيْهِ الْوَجْهُ وَالْعَمَلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>رَبَّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْعِبَاْدِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>إِلَيْهِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْوَجْهُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>وَالْعَمَلُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٣٨٤٣" nbr="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَمَرْتُكَ الْخَيْرَ فَافْعَلْ مَا أُمِرْتَ بِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَمَرْتُكَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْخَيْرَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>فَافْعَلْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>أُمِرْتَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِهِ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَقَدْ تَرَكْتُكَ ذَا مَاْلٍ وَذَا نَشَبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقَدْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>تَرَكْتُكَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>ذَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>مَاْلٍ</ar>
                  <en/>
               </t>
               <t>
                  <ar>وَذَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>نَشَبِ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٩٧١٤" nbr="">
      <verse>
         <hemistiche>
            <text>
               <ar>آلَيْتَ حَبَّ الْعِرَاْقِ الدَّهْرَ أَطْعَمُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>آلَيْتَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>حَبَّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْعِرَاْقِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الدَّهْرَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>أَطْعَمُهُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَالْحَبُّ يَأْكُلُهُ فِي الْقَرِيَةِ السُّوْسُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَالْحَبُّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>يَأْكُلُهُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>فِي</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْقَرِيَةِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>السُّوْسُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٧٢٧٣" nbr="">
      <verse>
         <hemistiche>
            <text>
               <ar>مَنّا الَّذِيْ اخْتِيْرَ الرِّجَاْلَ سَمَاْحَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَنّا</ar>
                  <en/>
               </t>
               <t>
                  <ar>الَّذِيْ</ar>
                  <en/>
               </t>
               <t>
                  <ar>اخْتِيْرَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الرِّجَاْلَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>سَمَاْحَةً</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَجُوْدًا إِذَا هَبَّ الرِّيَاْحُ الزَّعَاْزِعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَجُوْدًا</ar>
                  <en/>
               </t>
               <t>
                  <ar>إِذَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>هَبَّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الرِّيَاْحُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>الزَّعَاْزِعُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٨٩٠٩" nbr="">
      <verse>
         <hemistiche>
            <text>
               <ar>نُبِّئْتُ عَبْدَ اللهِ بِالْجَوِّ أَصْبَحَتْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>نُبِّئْتُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>عَبْدَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>اللهِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِالْجَوِّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>أَصْبَحَتْ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كِرَاْمًا مَوَاْلِيْهَا لَئِيْمًا صْمِيْمُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كِرَاْمًا</ar>
                  <en/>
               </t>
               <t>
                  <ar>مَوَاْلِيْهَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>لَئِيْمًا</ar>
                  <en/>
               </t>
               <t>
                  <ar>صْمِيْمُهَا</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
