<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="167">
   <verses id="٦٧٢٢٥" poet="الْفَرْزَدْقُ">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا مَرْوَ إِنّ مَطِيَّتِي مَحْبُوْسَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>مَرْوَ</ar>
               </t>
               <t>
                  <ar>إِنّ</ar>
               </t>
               <t>
                  <ar>مَطِيَّتِي</ar>
               </t>
               <t>
                  <ar>مَحْبُوْسَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>تَرْجُو الْحِبَاْءَ وَرَبُّهَا لَمْ يَيْأَسِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تَرْجُو</ar>
               </t>
               <t>
                  <ar>الْحِبَاْءَ</ar>
               </t>
               <t>
                  <ar>وَرَبُّهَا</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>يَيْأَسِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٠١٥٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا نُعْمَ هَلْ تَحْلِفُ لَا تَدِيْتُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>نُعْمَ</ar>
               </t>
               <t>
                  <ar>هَلْ</ar>
               </t>
               <t>
                  <ar>تَحْلِفُ</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَدِيْتُهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٩٥٢٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَا أَسْمَ صَبْرًا عَلَى مَا كَاْنَ مِنْ حَدَثٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>أَسْمَ</ar>
               </t>
               <t>
                  <ar>صَبْرًا</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>كَاْنَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>حَدَثٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إِنَّ الْحَوَاْدِثَ مَلْقِيٌّ وَمُنْتَظَرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>الْحَوَاْدِثَ</ar>
               </t>
               <t>
                  <ar>مَلْقِيٌّ</ar>
               </t>
               <t>
                  <ar>وَمُنْتَظَرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
