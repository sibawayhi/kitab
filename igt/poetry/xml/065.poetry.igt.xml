<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="065">
   <verses id="١٩٢٥١" poet="هُنَيُّ بْنُ أَحْمَرَ الْكِنَاْنِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>عَجَبٌ لِتِلْكَ قَضِيَّةً وَإِقَاْمَتِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَجَبٌ</ar>
               </t>
               <t>
                  <ar>لِتِلْكَ</ar>
               </t>
               <t>
                  <ar>قَضِيَّةً</ar>
               </t>
               <t>
                  <ar>وَإِقَاْمَتِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فِيْكُمْ عَلَى تِلْكَ الْقَضِيَّةِ أَعْجَبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فِيْكُمْ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>تِلْكَ</ar>
               </t>
               <t>
                  <ar>الْقَضِيَّةِ</ar>
               </t>
               <t>
                  <ar>أَعْجَبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٣٢٩١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَقَاْلَتْ حَنَاْنٌ مَا أَتَى بِكَ هٰهُنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَقَاْلَتْ</ar>
               </t>
               <t>
                  <ar>حَنَاْنٌ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>أَتَى</ar>
               </t>
               <t>
                  <ar>بِكَ</ar>
               </t>
               <t>
                  <ar>هٰهُنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَذُو نَسَبٍ أَمْ أَنْتَ بِالْحَيِّ عَاْرِفُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَذُو</ar>
               </t>
               <t>
                  <ar>نَسَبٍ</ar>
               </t>
               <t>
                  <ar>أَمْ</ar>
               </t>
               <t>
                  <ar>أَنْتَ</ar>
               </t>
               <t>
                  <ar>بِالْحَيِّ</ar>
               </t>
               <t>
                  <ar>عَاْرِفُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٣٩٩٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يَشْكُو إِلَيَّ جَمَلِي طُوْلَ السُّرَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَشْكُو</ar>
               </t>
               <t>
                  <ar>إِلَيَّ</ar>
               </t>
               <t>
                  <ar>جَمَلِي</ar>
               </t>
               <t>
                  <ar>طُوْلَ</ar>
               </t>
               <t>
                  <ar>السُّرَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>صَبْرٌ جَمِيْلٌ فَكِلَاْنا مُبْتَلَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>صَبْرٌ</ar>
               </t>
               <t>
                  <ar>جَمِيْلٌ</ar>
               </t>
               <t>
                  <ar>فَكِلَاْنا</ar>
               </t>
               <t>
                  <ar>مُبْتَلَى</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
