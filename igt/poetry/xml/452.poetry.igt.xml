<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="452">
   <verses id="٥١٩٨٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَمَا أَتَى عَاْمَاْنِ بَعْدَ انْفِصَاْلِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَمَا</ar>
               </t>
               <t>
                  <ar>أَتَى</ar>
               </t>
               <t>
                  <ar>عَاْمَاْنِ</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>انْفِصَاْلِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عُنَ الضَّرْعُ وَاحْلُوْلِي دُمَاْثًا يَرُوْدُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عُنَ</ar>
               </t>
               <t>
                  <ar>الضَّرْعُ</ar>
               </t>
               <t>
                  <ar>وَاحْلُوْلِي</ar>
               </t>
               <t>
                  <ar>دُمَاْثًا</ar>
               </t>
               <t>
                  <ar>يَرُوْدُهَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٨٩١٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>سُوْدٌ كَحُبِّ الْفُلْفُلِ الْمُصْعَرْرَ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سُوْدٌ</ar>
               </t>
               <t>
                  <ar>كَحُبِّ</ar>
               </t>
               <t>
                  <ar>الْفُلْفُلِ</ar>
               </t>
               <t>
                  <ar>الْمُصْعَرْرَ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
