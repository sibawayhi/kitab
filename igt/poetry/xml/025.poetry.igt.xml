<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="025">
   <verses id="١٢٨٧٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>قَدْ أَصْبَحَتْ أُمُّ الْخِيَاْرِ تَدَّعِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَدْ</ar>
               </t>
               <t>
                  <ar>أَصْبَحَتْ</ar>
               </t>
               <t>
                  <ar>أُمُّ</ar>
               </t>
               <t>
                  <ar>الْخِيَاْرِ</ar>
               </t>
               <t>
                  <ar>تَدَّعِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَلَيَّ ذَنْبًا كُلُّهُ لَمْ أَصْنَعِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَيَّ</ar>
               </t>
               <t>
                  <ar>ذَنْبًا</ar>
               </t>
               <t>
                  <ar>كُلُّهُ</ar>
               </t>
               <t>
                  <ar>لَمْ</ar>
               </t>
               <t>
                  <ar>أَصْنَعِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٥٧٣١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَأَقْبَلْتُ زَحْفًا عَلَى الرُّكْبَتَيْنِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَقْبَلْتُ</ar>
               </t>
               <t>
                  <ar>زَحْفًا</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>الرُّكْبَتَيْنِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَـثَوْبٌ لَبِسْتُ وَثَوْبٌ أَجَرّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَـثَوْبٌ</ar>
               </t>
               <t>
                  <ar>لَبِسْتُ</ar>
               </t>
               <t>
                  <ar>وَثَوْبٌ</ar>
               </t>
               <t>
                  <ar>أَجَرّ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٨٩٢٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَيَوْمٌ عَلَيْنَا وَيَوْمٌ لَنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَيَوْمٌ</ar>
               </t>
               <t>
                  <ar>عَلَيْنَا</ar>
               </t>
               <t>
                  <ar>وَيَوْمٌ</ar>
               </t>
               <t>
                  <ar>لَنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَيَوْمٌ نُسَاْءُ وَيَوْمٌ نُسَرّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَيَوْمٌ</ar>
               </t>
               <t>
                  <ar>نُسَاْءُ</ar>
               </t>
               <t>
                  <ar>وَيَوْمٌ</ar>
               </t>
               <t>
                  <ar>نُسَرّ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٣٥٨١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>ثَلَاثٌ كُلُّهُنَّ قَتَلْتُ عَمْدًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ثَلَاثٌ</ar>
               </t>
               <t>
                  <ar>كُلُّهُنَّ</ar>
               </t>
               <t>
                  <ar>قَتَلْتُ</ar>
               </t>
               <t>
                  <ar>عَمْدًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَأَخْزَى اللّٰهُ رَاْبِعَةً تَعُوْدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَخْزَى</ar>
               </t>
               <t>
                  <ar>اللّٰهُ</ar>
               </t>
               <t>
                  <ar>رَاْبِعَةً</ar>
               </t>
               <t>
                  <ar>تَعُوْدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٥٢١٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَبَحْتَ حِمَى تِهَاْمَةَ بَعْدَ نَجْدٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَبَحْتَ</ar>
               </t>
               <t>
                  <ar>حِمَى</ar>
               </t>
               <t>
                  <ar>تِهَاْمَةَ</ar>
               </t>
               <t>
                  <ar>بَعْدَ</ar>
               </t>
               <t>
                  <ar>نَجْدٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَمَا شَيْءٌ حَمَيْتَ بِمُسْتَبَاْحِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>شَيْءٌ</ar>
               </t>
               <t>
                  <ar>حَمَيْتَ</ar>
               </t>
               <t>
                  <ar>بِمُسْتَبَاْحِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٤٢٧٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَمَا أَدْرِي أَغَيَّرَهُمْ تَنَاْءٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَمَا</ar>
               </t>
               <t>
                  <ar>أَدْرِي</ar>
               </t>
               <t>
                  <ar>أَغَيَّرَهُمْ</ar>
               </t>
               <t>
                  <ar>تَنَاْءٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَطُوْلُ الْعَهْدِ أَمْ مَاْلٌ أَصَاْبُوا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَطُوْلُ</ar>
               </t>
               <t>
                  <ar>الْعَهْدِ</ar>
               </t>
               <t>
                  <ar>أَمْ</ar>
               </t>
               <t>
                  <ar>مَاْلٌ</ar>
               </t>
               <t>
                  <ar>أَصَاْبُوا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
