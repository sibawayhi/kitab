<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="303">
   <verses id="٧٩١٩٩" poet="غَيْلَاْنُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَدَاْبِقٌ وَأَيْنَ مِنِّي دَاْبِقُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَدَاْبِقٌ</ar>
               </t>
               <t>
                  <ar>وَأَيْنَ</ar>
               </t>
               <t>
                  <ar>مِنِّي</ar>
               </t>
               <t>
                  <ar>دَاْبِقُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٠٧١٨" poet="الْفَرْزَدْقُ">
      <verse>
         <hemistiche>
            <text>
               <ar>مِنْهُنَّ أَيَّاْمُ صِدْقٍ قَدْ عُرِفْتُ بِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِنْهُنَّ</ar>
               </t>
               <t>
                  <ar>أَيَّاْمُ</ar>
               </t>
               <t>
                  <ar>صِدْقٍ</ar>
               </t>
               <t>
                  <ar>قَدْ</ar>
               </t>
               <t>
                  <ar>عُرِفْتُ</ar>
               </t>
               <t>
                  <ar>بِهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَيَّاْمُ فَاْرِسَ وَالْأَيَّاْمُ مِنْ هَجَرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَيَّاْمُ</ar>
               </t>
               <t>
                  <ar>فَاْرِسَ</ar>
               </t>
               <t>
                  <ar>وَالْأَيَّاْمُ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>هَجَرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٢٨٧٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَنَاْبِغَةُ الْجَعْدِيُّ بِالرَّمْلِ بِيتُهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَنَاْبِغَةُ</ar>
               </t>
               <t>
                  <ar>الْجَعْدِيُّ</ar>
               </t>
               <t>
                  <ar>بِالرَّمْلِ</ar>
               </t>
               <t>
                  <ar>بِيتُهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَلَيْهِ تُرَاْبٌ مِنْ صَفِيْحٍ مُوَضَّعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلَيْهِ</ar>
               </t>
               <t>
                  <ar>تُرَاْبٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>صَفِيْحٍ</ar>
               </t>
               <t>
                  <ar>مُوَضَّعُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٢٤٨٣" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>سَتَعْلَمُ أَيُّنَا خَيْرٌ قَدِيْمًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سَتَعْلَمُ</ar>
               </t>
               <t>
                  <ar>أَيُّنَا</ar>
               </t>
               <t>
                  <ar>خَيْرٌ</ar>
               </t>
               <t>
                  <ar>قَدِيْمًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَأَعْظَمُنَا بِبَطْنِ حِرَاْءَ نَاْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأَعْظَمُنَا</ar>
               </t>
               <t>
                  <ar>بِبَطْنِ</ar>
               </t>
               <t>
                  <ar>حِرَاْءَ</ar>
               </t>
               <t>
                  <ar>نَاْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧١٤٧٨" poet="الْعَجَّاْجُ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَرَبِّ وَجْهٍ مِنْ حِرَاْءٍ مُنْحَنِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَرَبِّ</ar>
               </t>
               <t>
                  <ar>وَجْهٍ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>حِرَاْءٍ</ar>
               </t>
               <t>
                  <ar>مُنْحَنِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
