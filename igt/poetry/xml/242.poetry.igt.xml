               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>أَنَا</ar>
               </t>
               <t>
                  <ar>لِلشَّيْءِ</ar>
               </t>
               <t>
                  <ar>الَّذِي</ar>
               </t>
               <t>
                  <ar>لَيْسَ</ar>
               </t>
               <t>
                  <ar>نَاْفِعِي</ar>
