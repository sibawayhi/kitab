<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="242">
   <verses id="٥٩٧٣٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَا تَنْهَ عَنْ خُلُقٍ وَتَأْتِيَ مِثْلَهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَنْهَ</ar>
               </t>
               <t>
                  <ar>عَنْ</ar>
               </t>
               <t>
                  <ar>خُلُقٍ</ar>
               </t>
               <t>
                  <ar>وَتَأْتِيَ</ar>
               </t>
               <t>
                  <ar>مِثْلَهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَاْرٌ عَلَيْك إِذَا فَعَلْتَ عَظَيْمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَاْرٌ</ar>
               </t>
               <t>
                  <ar>عَلَيْك</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>فَعَلْتَ</ar>
               </t>
               <t>
                  <ar>عَظَيْمُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٩٧٤٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>ولَا تَشْتُمِ الْمَوْلَى وَتَبْلُغْ أَذَاْتَهَ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ولَا</ar>
               </t>
               <t>
                  <ar>تَشْتُمِ</ar>
               </t>
               <t>
                  <ar>الْمَوْلَى</ar>
               </t>
               <t>
                  <ar>وَتَبْلُغْ</ar>
               </t>
               <t>
                  <ar>أَذَاْتَهَ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنَّكَ إنْ تَفْعَلْ تُسَفَّهْ وَتَجْهَلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنَّكَ</ar>
               </t>
               <t>
                  <ar>إنْ</ar>
               </t>
               <t>
                  <ar>تَفْعَلْ</ar>
               </t>
               <t>
                  <ar>تُسَفَّهْ</ar>
               </t>
               <t>
                  <ar>وَتَجْهَلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩١٣٥١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَلَمْ أَكُ جَاْرَكُمْ وَيَكُوْنَ بَيْنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَلَمْ</ar>
               </t>
               <t>
                  <ar>أَكُ</ar>
               </t>
               <t>
                  <ar>جَاْرَكُمْ</ar>
               </t>
               <t>
                  <ar>وَيَكُوْنَ</ar>
               </t>
               <t>
                  <ar>بَيْنِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَبَيْنَكُمُ الْمَوَدّةُ وَالْإِخَاْءُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَبَيْنَكُمُ</ar>
               </t>
               <t>
                  <ar>الْمَوَدّةُ</ar>
               </t>
               <t>
                  <ar>وَالْإِخَاْءُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٨١٩٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>قَتَلْتُ بِعَبْدِ اللهِ خَيْرَ لِدَاْتِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَتَلْتُ</ar>
               </t>
               <t>
                  <ar>بِعَبْدِ</ar>
               </t>
               <t>
                  <ar>اللهِ</ar>
               </t>
               <t>
                  <ar>خَيْرَ</ar>
               </t>
               <t>
                  <ar>لِدَاْتِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ذُؤَاْبًا فَلَمْ أَفْخَرْ بِذَاْكَ وَأَجْزَعَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ذُؤَاْبًا</ar>
               </t>
               <t>
                  <ar>فَلَمْ</ar>
               </t>
               <t>
                  <ar>أَفْخَرْ</ar>
               </t>
               <t>
                  <ar>بِذَاْكَ</ar>
               </t>
               <t>
                  <ar>وَأَجْزَعَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٢٠٩٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَقْلُتُ ادْعِي وَأَدْعُوَ إِنَّ أْنْدَى</ar>
               <free/>
            </text>
