<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="110">
   <verses id="٥٠٣٤٩" poet="الْأَعْشَى">
      <verse>
         <hemistiche>
            <text>
               <ar>لَئِنْ كُنْتَ فِي جُبٍّ ثَمَاْنِيْنَ قَاْمَةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَئِنْ</ar>
               </t>
               <t>
                  <ar>كُنْتَ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>جُبٍّ</ar>
               </t>
               <t>
                  <ar>ثَمَاْنِيْنَ</ar>
               </t>
               <t>
                  <ar>قَاْمَةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَرُقِّيْتَ أَسْبَاْبَ السَّمَاْءِ بِسُلَّمٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَرُقِّيْتَ</ar>
               </t>
               <t>
                  <ar>أَسْبَاْبَ</ar>
               </t>
               <t>
                  <ar>السَّمَاْءِ</ar>
               </t>
               <t>
                  <ar>بِسُلَّمٍ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٦٣٦٩" poet="سُحَيْمُ بْنُ وَثِيْلٍ">
      <verse>
         <hemistiche>
            <text>
               <ar>مَرَرْتُ عَلَى وَاْدِي السِّبَاْعِ وَلَا أَرَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَرَرْتُ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>وَاْدِي</ar>
               </t>
               <t>
                  <ar>السِّبَاْعِ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>أَرَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَوَاْدِي السِّبَاْعِ حِيْنَ يُظْلِمُ وَاْدِيًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَوَاْدِي</ar>
               </t>
               <t>
                  <ar>السِّبَاْعِ</ar>
               </t>
               <t>
                  <ar>حِيْنَ</ar>
               </t>
               <t>
                  <ar>يُظْلِمُ</ar>
               </t>
               <t>
                  <ar>وَاْدِيًا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>أَقَلَّ بِهِ رَكْبٌ أَتَوْهُ تَئِيَّةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَقَلَّ</ar>
               </t>
               <t>
                  <ar>بِهِ</ar>
               </t>
               <t>
                  <ar>رَكْبٌ</ar>
               </t>
               <t>
                  <ar>أَتَوْهُ</ar>
               </t>
               <t>
                  <ar>تَئِيَّةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَأَخْوَفَ إِلَّا مَا وَقَى اللهُ سَاْرِيًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأَخْوَفَ</ar>
               </t>
               <t>
                  <ar>إِلَّا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>وَقَى</ar>
               </t>
               <t>
                  <ar>اللهُ</ar>
               </t>
               <t>
                  <ar>سَاْرِيًا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
