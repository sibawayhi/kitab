   <verses id="٤٢٨٩٢" nbr="1">
      <verse>
         <hemistiche>
            <text>
               <ar>فَأَصْبَحُوْا وَالنَّوَى عَالِي مُعَرَّسِهِمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَصْبَحُوْا</ar>
                  <en/>
               </t>
               <t>
                  <ar>وَالنَّوَى</ar>
                  <en/>
               </t>
               <t>
                  <ar>عَالِي</ar>
                  <en/>
               </t>
               <t>
                  <ar>مُعَرَّسِهِمْ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَيْسَ كُلَّ النَّوَى تُلْقِي الْمَسَاْكِيْنُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَيْسَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>كُلَّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>النَّوَى</ar>
                  <en/>
               </t>
               <t>
                  <ar>تُلْقِي</ar>
                  <en/>
               </t>
               <t>
                  <ar>الْمَسَاْكِيْنُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٦٧١٩" nbr="2">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا مِتُّ كَاْنَ النَّاْسُ صِنْفَاْنِ شَاْمِتٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
                  <en/>
               </t>
               <t>
                  <ar>مِتُّ</ar>
                  <en/>
               </t>
               <t>
                  <ar>كَاْنَ</ar>
                  <en/>
               </t>
               <t>
                  <ar>النَّاْسُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>صِنْفَاْنِ</ar>
                  <en/>
               </t>
               <t>
                  <ar>شَاْمِتٌ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَآخَرُ مُثْنٍ بِالَّذِي كُنْتُ أَصْنَعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَآخَرُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>مُثْنٍ</ar>
                  <en/>
               </t>
               <t>
                  <ar>بِالَّذِي</ar>
                  <en/>
               </t>
               <t>
                  <ar>كُنْتُ</ar>
                  <en/>
               </t>
               <t>
                  <ar>أَصْنَعُ</ar>
                  <en/>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٣٠٢٠" nbr="3">
      <verse>
         <hemistiche>
            <text>
               <ar>هِيَ الشِّفَاْءُ لِدَاْئِي لَوْ ظَفِرْتُ بِهَا</ar>
