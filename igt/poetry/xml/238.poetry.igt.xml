<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="238">
   <verses id="٢٨٢٨٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فِيًّا عَجَبًا حَتَّى كُلَيْبٌ تَسُبُّنِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فِيًّا</ar>
               </t>
               <t>
                  <ar>عَجَبًا</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>كُلَيْبٌ</ar>
               </t>
               <t>
                  <ar>تَسُبُّنِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَأَنَّ أَبَاْهَا نَهْشَلٌ أَوْ مُجَاْشِعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَأَنَّ</ar>
               </t>
               <t>
                  <ar>أَبَاْهَا</ar>
               </t>
               <t>
                  <ar>نَهْشَلٌ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>مُجَاْشِعُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٦٦٧٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>يُغْشَوْنَ حَتَّى لَا تَهِرُّ كِلَاْبُهُمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يُغْشَوْنَ</ar>
               </t>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>تَهِرُّ</ar>
               </t>
               <t>
                  <ar>كِلَاْبُهُمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لًا يَسَاْلُوْنَ عَنْ السَّوَاْدِ الْمُقْبِلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لًا</ar>
               </t>
               <t>
                  <ar>يَسَاْلُوْنَ</ar>
               </t>
               <t>
                  <ar>عَنْ</ar>
               </t>
               <t>
                  <ar>السَّوَاْدِ</ar>
               </t>
               <t>
                  <ar>الْمُقْبِلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٦٢٤٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>تُرَاْدَى عَلَى دِمْنِ الْحِيَاْضِ فَإِنْ تَعَفْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>تُرَاْدَى</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>دِمْنِ</ar>
               </t>
               <t>
                  <ar>الْحِيَاْضِ</ar>
               </t>
               <t>
                  <ar>فَإِنْ</ar>
               </t>
               <t>
                  <ar>تَعَفْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَإِنّ الْمُنَدَّى رِحْلَةٌ فَرُكُوْبُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَإِنّ</ar>
               </t>
               <t>
                  <ar>الْمُنَدَّى</ar>
               </t>
               <t>
                  <ar>رِحْلَةٌ</ar>
               </t>
               <t>
                  <ar>فَرُكُوْبُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
