<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="034">
   <verses id="٠١٤٥٦" poet="هُدْبَةُ بْنُ الْخَشْرَمِ الْعُذْرِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَا ذَا جَلَالٍ هِبْنَهُ لِجَلَالِهِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَا</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>جَلَالٍ</ar>
               </t>
               <t>
                  <ar>هِبْنَهُ</ar>
               </t>
               <t>
                  <ar>لِجَلَالِهِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَا ذَا ضَيَاْعٍ هُنَّ يَتْرُكْنَ لِلْفَقْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>ضَيَاْعٍ</ar>
               </t>
               <t>
                  <ar>هُنَّ</ar>
               </t>
               <t>
                  <ar>يَتْرُكْنَ</ar>
               </t>
               <t>
                  <ar>لِلْفَقْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٥١٨١" poet="زُهَيْرُ">
      <verse>
         <hemistiche>
            <text>
               <ar>لَا الدَّاْرَ غَيَّرَهَا بَعْدِي الْأَنِيْسُ وَلَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>الدَّاْرَ</ar>
               </t>
               <t>
                  <ar>غَيَّرَهَا</ar>
               </t>
               <t>
                  <ar>بَعْدِي</ar>
               </t>
               <t>
                  <ar>الْأَنِيْسُ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>بِالدَّاْرِ لَوْ كَلَّمَتْ ذَا حَاْجَةٍ صَمَمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>بِالدَّاْرِ</ar>
               </t>
               <t>
                  <ar>لَوْ</ar>
               </t>
               <t>
                  <ar>كَلَّمَتْ</ar>
               </t>
               <t>
                  <ar>ذَا</ar>
               </t>
               <t>
                  <ar>حَاْجَةٍ</ar>
               </t>
               <t>
                  <ar>صَمَمُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٥٧٨٢" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَا حَسَبًا فَخَرْتَ بِهِ لِتَيْمٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَا</ar>
               </t>
               <t>
                  <ar>حَسَبًا</ar>
               </t>
               <t>
                  <ar>فَخَرْتَ</ar>
               </t>
               <t>
                  <ar>بِهِ</ar>
               </t>
               <t>
                  <ar>لِتَيْمٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَا جَدًّا إِذَا ازْدَحَمَ الْجُدُوْدُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>جَدًّا</ar>
               </t>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>ازْدَحَمَ</ar>
               </t>
               <t>
                  <ar>الْجُدُوْدُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٤٦٧٨" poet="مُزَاْحِمٌ الْعُقَيْلِىُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>وَقَالُوْا تَعَرَّفْهَا الْمَنِاْزِلَ مِنْ مِنًى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَقَالُوْا</ar>
               </t>
               <t>
                  <ar>تَعَرَّفْهَا</ar>
               </t>
               <t>
                  <ar>الْمَنِاْزِلَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>مِنًى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَمَا كُلُّ مَنْ وَاْفَى مِنًى أَنَا عَاْرِفُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>كُلُّ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>وَاْفَى</ar>
               </t>
               <t>
                  <ar>مِنًى</ar>
               </t>
               <t>
                  <ar>أَنَا</ar>
               </t>
               <t>
                  <ar>عَاْرِفُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٥٧٠٨" poet="حُمَيْدٌ الْأَرْقَطُ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَأَصْبَحُوْا وَالنَّوَى عَاْلِي مُعَرَّسِهِمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَأَصْبَحُوْا</ar>
               </t>
               <t>
                  <ar>وَالنَّوَى</ar>
               </t>
               <t>
                  <ar>عَاْلِي</ar>
               </t>
               <t>
                  <ar>مُعَرَّسِهِمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَيْسَ كُلُّ النَّوَى يُلْقِي الْمَسَاْكِيْنُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَيْسَ</ar>
               </t>
               <t>
                  <ar>كُلُّ</ar>
               </t>
               <t>
                  <ar>النَّوَى</ar>
               </t>
               <t>
                  <ar>يُلْقِي</ar>
               </t>
               <t>
                  <ar>الْمَسَاْكِيْنُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٥٧٠٨" poet="هِشَاْمٌ أَخُو ذِي الرُّمَّةِ">
      <verse>
         <hemistiche>
            <text>
               <ar>هِيَ الشِّفَاْءُ لِدَاْئِي لَوْ ظَفِرْتُ بِهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>هِيَ</ar>
               </t>
               <t>
                  <ar>الشِّفَاْءُ</ar>
               </t>
               <t>
                  <ar>لِدَاْئِي</ar>
               </t>
               <t>
                  <ar>لَوْ</ar>
               </t>
               <t>
                  <ar>ظَفِرْتُ</ar>
               </t>
               <t>
                  <ar>بِهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَيْسَ مِنْهَا شِفَاْءُ الدَّاْءِ مَبْذُوْلُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَيْسَ</ar>
               </t>
               <t>
                  <ar>مِنْهَا</ar>
               </t>
               <t>
                  <ar>شِفَاْءُ</ar>
               </t>
               <t>
                  <ar>الدَّاْءِ</ar>
               </t>
               <t>
                  <ar>مَبْذُوْلُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٤٥٢٦" poet="الْمَرَّاْرُ الْأَسَدِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَوْ أَنَّهَا إِيَّاْكَ عَضَّتْكَ مِثْلُهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَوْ</ar>
               </t>
               <t>
                  <ar>أَنَّهَا</ar>
               </t>
               <t>
                  <ar>إِيَّاْكَ</ar>
               </t>
               <t>
                  <ar>عَضَّتْكَ</ar>
               </t>
               <t>
                  <ar>مِثْلُهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>جَرَرْتَ عَلَى مَا شِئْتَ نَحْرًا وَكَلْكَلَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>جَرَرْتَ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>شِئْتَ</ar>
               </t>
               <t>
                  <ar>نَحْرًا</ar>
               </t>
               <t>
                  <ar>وَكَلْكَلَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
