<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="036">
   <verses id="٧٣٠٠٣" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>لَقَدْ لُمْتِنَا يَا أُمَّ غَيْلَاْنَ في السُّرَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَقَدْ</ar>
               </t>
               <t>
                  <ar>لُمْتِنَا</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>أُمَّ</ar>
               </t>
               <t>
                  <ar>غَيْلَاْنَ</ar>
               </t>
               <t>
                  <ar>في</ar>
               </t>
               <t>
                  <ar>السُّرَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَنِمْتِ وَمَا لَيْلُ الْمَطِيِّ بنَاْئِمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَنِمْتِ</ar>
               </t>
               <t>
                  <ar>وَمَا</ar>
               </t>
               <t>
                  <ar>لَيْلُ</ar>
               </t>
               <t>
                  <ar>الْمَطِيِّ</ar>
               </t>
               <t>
                  <ar>بنَاْئِمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٤٩٢٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>أَمَّا النَّهَاْرُ فَفِي قَيْدٍ وَسِلْسِلَةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَمَّا</ar>
               </t>
               <t>
                  <ar>النَّهَاْرُ</ar>
               </t>
               <t>
                  <ar>فَفِي</ar>
               </t>
               <t>
                  <ar>قَيْدٍ</ar>
               </t>
               <t>
                  <ar>وَسِلْسِلَةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَاللَّيْلُ في قَعْرِ مَنْحُوْتٍ مِنَ السَّاْجِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَاللَّيْلُ</ar>
               </t>
               <t>
                  <ar>في</ar>
               </t>
               <t>
                  <ar>قَعْرِ</ar>
               </t>
               <t>
                  <ar>مَنْحُوْتٍ</ar>
               </t>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>السَّاْجِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٦٧٧٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَكَأَنَّهُ لَهِقُ السَّرَاْةِ كَأَنّهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَكَأَنَّهُ</ar>
               </t>
               <t>
                  <ar>لَهِقُ</ar>
               </t>
               <t>
                  <ar>السَّرَاْةِ</ar>
               </t>
               <t>
                  <ar>كَأَنّهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مَا حَاْجِبَيْهِ مُعَيَّنٌ بِسَوَاْدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>حَاْجِبَيْهِ</ar>
               </t>
               <t>
                  <ar>مُعَيَّنٌ</ar>
               </t>
               <t>
                  <ar>بِسَوَاْدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٩٩٠٧" poet="الْجَعْدِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>مَلَكَ الْخَوَرْنَقَ وَالسَّدِيْرَ وَدَاْنَهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَلَكَ</ar>
               </t>
               <t>
                  <ar>الْخَوَرْنَقَ</ar>
               </t>
               <t>
                  <ar>وَالسَّدِيْرَ</ar>
               </t>
               <t>
                  <ar>وَدَاْنَهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مَا بَيْنَ حِمْيَرَ أَهْلِهَا وَأُوَاْلِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>بَيْنَ</ar>
               </t>
               <t>
                  <ar>حِمْيَرَ</ar>
               </t>
               <t>
                  <ar>أَهْلِهَا</ar>
               </t>
               <t>
                  <ar>وَأُوَاْلِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٤٦٠٤" poet="جَرِيْرٌ">
      <verse>
         <hemistiche>
            <text>
               <ar>مَشَقَ الْهَوَاْجِرُ لَحْمَهُنَّ مَعَ السُّرَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مَشَقَ</ar>
               </t>
               <t>
                  <ar>الْهَوَاْجِرُ</ar>
               </t>
               <t>
                  <ar>لَحْمَهُنَّ</ar>
               </t>
               <t>
                  <ar>مَعَ</ar>
               </t>
               <t>
                  <ar>السُّرَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>حَتَّى ذَهَبْنَ كَلاْكِلًا وَصُدُوْرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>حَتَّى</ar>
               </t>
               <t>
                  <ar>ذَهَبْنَ</ar>
               </t>
               <t>
                  <ar>كَلاْكِلًا</ar>
               </t>
               <t>
                  <ar>وَصُدُوْرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٧٣٩٩" poet="عَمْرٌو بْنُ عَمَّاْرٍ النَّهْدِيُّ">
      <verse>
         <hemistiche>
            <text>
               <ar>طَوِيْلٌ مِتَلُّ الْعُنْقِ أَشْرَفُ كَاْهِلًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>طَوِيْلٌ</ar>
               </t>
               <t>
                  <ar>مِتَلُّ</ar>
               </t>
               <t>
                  <ar>الْعُنْقِ</ar>
               </t>
               <t>
                  <ar>أَشْرَفُ</ar>
               </t>
               <t>
                  <ar>كَاْهِلًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>أَشَقُّ رَحِيْبُ الْجَوْفِ مُعْتَدِلُ الْجِرْمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>أَشَقُّ</ar>
               </t>
               <t>
                  <ar>رَحِيْبُ</ar>
               </t>
               <t>
                  <ar>الْجَوْفِ</ar>
               </t>
               <t>
                  <ar>مُعْتَدِلُ</ar>
               </t>
               <t>
                  <ar>الْجِرْمِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٢٥٦٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِذَا أَكَلْتُ سَمَكًا وَفَرْضًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِذَا</ar>
               </t>
               <t>
                  <ar>أَكَلْتُ</ar>
               </t>
               <t>
                  <ar>سَمَكًا</ar>
               </t>
               <t>
                  <ar>وَفَرْضًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ذَهَبْتُ طُوْلًا وَذَهَبْتُ عَرْضًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ذَهَبْتُ</ar>
               </t>
               <t>
                  <ar>طُوْلًا</ar>
               </t>
               <t>
                  <ar>وَذَهَبْتُ</ar>
               </t>
               <t>
                  <ar>عَرْضًا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٦٧١١" poet="عَاْمِرُ بْنُ الطُّفَيْلِ">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَأَبْغِيَنَّكُمُ قَنًا وَعُوَاْرِضًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَأَبْغِيَنَّكُمُ</ar>
               </t>
               <t>
                  <ar>قَنًا</ar>
               </t>
               <t>
                  <ar>وَعُوَاْرِضًا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَلَأَقْبِلَنَّ الْخَيْلَ لَاْبَةَ ضَرْغَدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَأَقْبِلَنَّ</ar>
               </t>
               <t>
                  <ar>الْخَيْلَ</ar>
               </t>
               <t>
                  <ar>لَاْبَةَ</ar>
               </t>
               <t>
                  <ar>ضَرْغَدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
