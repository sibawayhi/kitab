<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="235">
   <verses id="٣٦٨٢٧" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>مُحَمَّدُ تَفْدِ نَفْسَكَ كُلُّ نَفْسٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُحَمَّدُ</ar>
               </t>
               <t>
                  <ar>تَفْدِ</ar>
               </t>
               <t>
                  <ar>نَفْسَكَ</ar>
               </t>
               <t>
                  <ar>كُلُّ</ar>
               </t>
               <t>
                  <ar>نَفْسٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>إَذَا مَا خِفْتَ مِنْ شَيْءٍ تَبَاْلَاَْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إَذَا</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>خِفْتَ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>شَيْءٍ</ar>
               </t>
               <t>
                  <ar>تَبَاْلَاَْ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٤١٥١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>عَلِى مِثْلِ أَصْحَاْبِ الْبَعُوْضَةِ فَاْخْمُشِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَلِى</ar>
               </t>
               <t>
                  <ar>مِثْلِ</ar>
               </t>
               <t>
                  <ar>أَصْحَاْبِ</ar>
               </t>
               <t>
                  <ar>الْبَعُوْضَةِ</ar>
               </t>
               <t>
                  <ar>فَاْخْمُشِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لَكِ الْوَيْلُ حُرَّ الْوَجْهِ أَوْ يَبْكِ مَنْ بَكَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَكِ</ar>
               </t>
               <t>
                  <ar>الْوَيْلُ</ar>
               </t>
               <t>
                  <ar>حُرَّ</ar>
               </t>
               <t>
                  <ar>الْوَجْهِ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>يَبْكِ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>بَكَى</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٥٧٣٨١" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَمَنْ نَاْلَ الْغِنَى فَلْيَصْطَنِعْهُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَمَنْ</ar>
               </t>
               <t>
                  <ar>نَاْلَ</ar>
               </t>
               <t>
                  <ar>الْغِنَى</ar>
               </t>
               <t>
                  <ar>فَلْيَصْطَنِعْهُ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>صَنِعَتَهُ وَيَجْهَدْ كُلَّ جَهْدِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>صَنِعَتَهُ</ar>
               </t>
               <t>
                  <ar>وَيَجْهَدْ</ar>
               </t>
               <t>
                  <ar>كُلَّ</ar>
               </t>
               <t>
                  <ar>جَهْدِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
