<!---->
<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="216">
   <verses id="٤١٦٩٢" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>قَلْتُ إِذْ أَقْبَلَتْ وَزُهْرٌ تَهَاْدَى</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَلْتُ</ar>
               </t>
               <t>
                  <ar>إِذْ</ar>
               </t>
               <t>
                  <ar>أَقْبَلَتْ</ar>
               </t>
               <t>
                  <ar>وَزُهْرٌ</ar>
               </t>
               <t>
                  <ar>تَهَاْدَى</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كِنِعَاْجِ الْمَلَا تَعَسَّفْنَ رَمْلَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كِنِعَاْجِ</ar>
               </t>
               <t>
                  <ar>الْمَلَا</ar>
               </t>
               <t>
                  <ar>تَعَسَّفْنَ</ar>
               </t>
               <t>
                  <ar>رَمْلَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٠٢٤٩٠" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَلَمَّا لَحِقَنْا وَالْجِيَاْدُ عَشِيَّةً</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَلَمَّا</ar>
               </t>
               <t>
                  <ar>لَحِقَنْا</ar>
               </t>
               <t>
                  <ar>وَالْجِيَاْدُ</ar>
               </t>
               <t>
                  <ar>عَشِيَّةً</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>دَعَوْا يَا لَكَلْبٍ وَاعْتَزَيْنَا لِعِاْمِرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>دَعَوْا</ar>
               </t>
               <t>
                  <ar>يَا</ar>
               </t>
               <t>
                  <ar>لَكَلْبٍ</ar>
               </t>
               <t>
                  <ar>وَاعْتَزَيْنَا</ar>
               </t>
               <t>
                  <ar>لِعِاْمِرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٢٠١٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>آبَكَ أَيِّهْ بِيَ أَوْ مُصَدَّرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>آبَكَ</ar>
               </t>
               <t>
                  <ar>أَيِّهْ</ar>
               </t>
               <t>
                  <ar>بِيَ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>مُصَدَّرِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مِنْ حُمُرِ الْجِلَّةِ جَأْبٍ حَشْوَرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>حُمُرِ</ar>
               </t>
               <t>
                  <ar>الْجِلَّةِ</ar>
               </t>
               <t>
                  <ar>جَأْبٍ</ar>
               </t>
               <t>
                  <ar>حَشْوَرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٠٣٢٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَالْيَوْمَ قَرَّبْتَ تَهْجُوْنَا وَتَشْتِمُنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَالْيَوْمَ</ar>
               </t>
               <t>
                  <ar>قَرَّبْتَ</ar>
               </t>
               <t>
                  <ar>تَهْجُوْنَا</ar>
               </t>
               <t>
                  <ar>وَتَشْتِمُنَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَاذْهَبْ فَمَا بِكَ وَالْأَيَّاْمِ مِنْ عَجَبِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَاذْهَبْ</ar>
               </t>
               <t>
                  <ar>فَمَا</ar>
               </t>
               <t>
                  <ar>بِكَ</ar>
               </t>
               <t>
                  <ar>وَالْأَيَّاْمِ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>عَجَبِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
