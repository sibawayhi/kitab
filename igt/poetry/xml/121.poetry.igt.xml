<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="121">
   <verses id="٢٤١٣٨" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَبِتُّ كَأَنِّي سَاْوَرَتْنِي ضَئِيْلَةٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَبِتُّ</ar>
               </t>
               <t>
                  <ar>كَأَنِّي</ar>
               </t>
               <t>
                  <ar>سَاْوَرَتْنِي</ar>
               </t>
               <t>
                  <ar>ضَئِيْلَةٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>مِنَ الرُّقْشِ فِي أَنْيِاْبِهَا السُّمُّ نَاْقِعُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مِنَ</ar>
               </t>
               <t>
                  <ar>الرُّقْشِ</ar>
               </t>
               <t>
                  <ar>فِي</ar>
               </t>
               <t>
                  <ar>أَنْيِاْبِهَا</ar>
               </t>
               <t>
                  <ar>السُّمُّ</ar>
               </t>
               <t>
                  <ar>نَاْقِعُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨١٩٠٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَا دَرَّ دَرِّي إِنْ أَطْعَمْتُ نَاْزِلَكُمْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>دَرَّ</ar>
               </t>
               <t>
                  <ar>دَرِّي</ar>
               </t>
               <t>
                  <ar>إِنْ</ar>
               </t>
               <t>
                  <ar>أَطْعَمْتُ</ar>
               </t>
               <t>
                  <ar>نَاْزِلَكُمْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>قِرْفَ الْحَتِيَّ وَعِنْدِي الْبُرُّ مَكْنُوْزُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قِرْفَ</ar>
               </t>
               <t>
                  <ar>الْحَتِيَّ</ar>
               </t>
               <t>
                  <ar>وَعِنْدِي</ar>
               </t>
               <t>
                  <ar>الْبُرُّ</ar>
               </t>
               <t>
                  <ar>مَكْنُوْزُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٤٢٥٢٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَا سَاْفِرُ النَّيِّ مَدْخُوْلٌ وَلَا هَيِجٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَا</ar>
               </t>
               <t>
                  <ar>سَاْفِرُ</ar>
               </t>
               <t>
                  <ar>النَّيِّ</ar>
               </t>
               <t>
                  <ar>مَدْخُوْلٌ</ar>
               </t>
               <t>
                  <ar>وَلَا</ar>
               </t>
               <t>
                  <ar>هَيِجٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>عَاْرِي الْعِظَاْمِ عَلَيْهِ الْوَدْعُ مَنْظُوْمُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>عَاْرِي</ar>
               </t>
               <t>
                  <ar>الْعِظَاْمِ</ar>
               </t>
               <t>
                  <ar>عَلَيْهِ</ar>
               </t>
               <t>
                  <ar>الْوَدْعُ</ar>
               </t>
               <t>
                  <ar>مَنْظُوْمُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٣٦٣٩٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>إِنَّ لَكُمْ أَصْلَ الْبِلَاْدِ وَفَرْعَهَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>إِنَّ</ar>
               </t>
               <t>
                  <ar>لَكُمْ</ar>
               </t>
               <t>
                  <ar>أَصْلَ</ar>
               </t>
               <t>
                  <ar>الْبِلَاْدِ</ar>
               </t>
               <t>
                  <ar>وَفَرْعَهَا</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَاْلْخَيْرُ فِيْكَمْ ثَاْبِتًا مَبْذُوْلًا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَاْلْخَيْرُ</ar>
               </t>
               <t>
                  <ar>فِيْكَمْ</ar>
               </t>
               <t>
                  <ar>ثَاْبِتًا</ar>
               </t>
               <t>
                  <ar>مَبْذُوْلًا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
