<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="207">
   <verses id="٤٨٤٤٤" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>مُبَرَّأٌ مِنْ عُيُوْبِ النَّاْسِ كَلِّهِمِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>مُبَرَّأٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>عُيُوْبِ</ar>
               </t>
               <t>
                  <ar>النَّاْسِ</ar>
               </t>
               <t>
                  <ar>كَلِّهِمِ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>فَاللَّهُ يَرْعَى أَبَا حَرْبٍ وَإِيَّاْنَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَاللَّهُ</ar>
               </t>
               <t>
                  <ar>يَرْعَى</ar>
               </t>
               <t>
                  <ar>أَبَا</ar>
               </t>
               <t>
                  <ar>حَرْبٍ</ar>
               </t>
               <t>
                  <ar>وَإِيَّاْنَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٩٨٤٩٣" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لْعَمْرُكَ مَا خَشِيْتُ عَلَى عَدِيٍّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لْعَمْرُكَ</ar>
               </t>
               <t>
                  <ar>مَا</ar>
               </t>
               <t>
                  <ar>خَشِيْتُ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>عَدِيٍّ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>سُيُوْفَ بَنِي مُقَيِّدَةِ الْحِمَاْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سُيُوْفَ</ar>
               </t>
               <t>
                  <ar>بَنِي</ar>
               </t>
               <t>
                  <ar>مُقَيِّدَةِ</ar>
               </t>
               <t>
                  <ar>الْحِمَاْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>وَلَكِنِّي خَشِيْتُ عَلَى عَدِيٍّ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَلَكِنِّي</ar>
               </t>
               <t>
                  <ar>خَشِيْتُ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>عَدِيٍّ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>سُيُوْفَ الْقَوْمِ أَوْ إِيَّاْكَ حَاْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>سُيُوْفَ</ar>
               </t>
               <t>
                  <ar>الْقَوْمِ</ar>
               </t>
               <t>
                  <ar>أَوْ</ar>
               </t>
               <t>
                  <ar>إِيَّاْكَ</ar>
               </t>
               <t>
                  <ar>حَاْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٧٠٠٤٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>لَيْتَ هٰذَا اللَّيْلَ شَهْرٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَيْتَ</ar>
               </t>
               <t>
                  <ar>هٰذَا</ar>
               </t>
               <t>
                  <ar>اللَّيْلَ</ar>
               </t>
               <t>
                  <ar>شَهْرٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لًا نَرَى فِيْهِ عَرِيْبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لًا</ar>
               </t>
               <t>
                  <ar>نَرَى</ar>
               </t>
               <t>
                  <ar>فِيْهِ</ar>
               </t>
               <t>
                  <ar>عَرِيْبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
      <verse>
         <hemistiche>
            <text>
               <ar>لَيْسَ إِيَّاْيَ وَإِيَّاْ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لَيْسَ</ar>
               </t>
               <t>
                  <ar>إِيَّاْيَ</ar>
               </t>
               <t>
                  <ar>وَإِيَّاْ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>كَ ولَا نَخْشَى رَقِيْبَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>كَ</ar>
               </t>
               <t>
                  <ar>ولَا</ar>
               </t>
               <t>
                  <ar>نَخْشَى</ar>
               </t>
               <t>
                  <ar>رَقِيْبَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
