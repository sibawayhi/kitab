<poetry xmlns="http://www.sibawayhi.org/schema/2024/05/igt" bab="414">
   <verses id="٣٦٠٠٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَطَاْفَتْ ثَلَاْثًا بَيْنَ يَوْمٍ وَلْيَلْةٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَطَاْفَتْ</ar>
               </t>
               <t>
                  <ar>ثَلَاْثًا</ar>
               </t>
               <t>
                  <ar>بَيْنَ</ar>
               </t>
               <t>
                  <ar>يَوْمٍ</ar>
               </t>
               <t>
                  <ar>وَلْيَلْةٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>يَكُوْنُ النَّكِيْرُ أَنْ تُضِيْفَ وَتَجْأَرَا</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>يَكُوْنُ</ar>
               </t>
               <t>
                  <ar>النَّكِيْرُ</ar>
               </t>
               <t>
                  <ar>أَنْ</ar>
               </t>
               <t>
                  <ar>تُضِيْفَ</ar>
               </t>
               <t>
                  <ar>وَتَجْأَرَا</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٨٢٣١٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>وَإنَّ كِلَاْبًا هَذِهِ عَشْرُ أَبْطُنٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَإنَّ</ar>
               </t>
               <t>
                  <ar>كِلَاْبًا</ar>
               </t>
               <t>
                  <ar>هَذِهِ</ar>
               </t>
               <t>
                  <ar>عَشْرُ</ar>
               </t>
               <t>
                  <ar>أَبْطُنٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>وَأَنْتَ بَرِيْءٌ مِنْ قَبَاْئِلِهَا الْعَشْرِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>وَأَنْتَ</ar>
               </t>
               <t>
                  <ar>بَرِيْءٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>قَبَاْئِلِهَا</ar>
               </t>
               <t>
                  <ar>الْعَشْرِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٦٦٥١٥" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>قَبَاْئِلُنَا سَبْعٌ وَأَنْتُمْ ثَلَاْثَةٌ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>قَبَاْئِلُنَا</ar>
               </t>
               <t>
                  <ar>سَبْعٌ</ar>
               </t>
               <t>
                  <ar>وَأَنْتُمْ</ar>
               </t>
               <t>
                  <ar>ثَلَاْثَةٌ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ولَلسَّبْعُ خَيْرٌ مِنْ ثَلَاْثٍ وَأَكْثَرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ولَلسَّبْعُ</ar>
               </t>
               <t>
                  <ar>خَيْرٌ</ar>
               </t>
               <t>
                  <ar>مِنْ</ar>
               </t>
               <t>
                  <ar>ثَلَاْثٍ</ar>
               </t>
               <t>
                  <ar>وَأَكْثَرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="٢٥٧٦٩" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>ثُلَاْثَةُ أَنْفُسٍ وَثَلَاْثُ ذَوْدٍ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ثُلَاْثَةُ</ar>
               </t>
               <t>
                  <ar>أَنْفُسٍ</ar>
               </t>
               <t>
                  <ar>وَثَلَاْثُ</ar>
               </t>
               <t>
                  <ar>ذَوْدٍ</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>لْقَدْ جَاْرَ الزَّمَاْنُ عَلَى عِيَاْلِيِ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>لْقَدْ</ar>
               </t>
               <t>
                  <ar>جَاْرَ</ar>
               </t>
               <t>
                  <ar>الزَّمَاْنُ</ar>
               </t>
               <t>
                  <ar>عَلَى</ar>
               </t>
               <t>
                  <ar>عِيَاْلِيِ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
   <verses id="١٠٢٥٦" poet="">
      <verse>
         <hemistiche>
            <text>
               <ar>فَكَاْنَ نَصِيْرِي دُوْنَ مَنْ كُنْتُ أَتَّقِي</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>فَكَاْنَ</ar>
               </t>
               <t>
                  <ar>نَصِيْرِي</ar>
               </t>
               <t>
                  <ar>دُوْنَ</ar>
               </t>
               <t>
                  <ar>مَنْ</ar>
               </t>
               <t>
                  <ar>كُنْتُ</ar>
               </t>
               <t>
                  <ar>أَتَّقِي</ar>
               </t>
            </igt>
         </hemistiche>
         <hemistiche>
            <text>
               <ar>ثُلَاْثُ شُخُوْصٍ كَاْعِبَاْنِ وَمُعْصِرُ</ar>
               <free/>
            </text>
            <igt>
               <t>
                  <ar>ثُلَاْثُ</ar>
               </t>
               <t>
                  <ar>شُخُوْصٍ</ar>
               </t>
               <t>
                  <ar>كَاْعِبَاْنِ</ar>
               </t>
               <t>
                  <ar>وَمُعْصِرُ</ar>
               </t>
            </igt>
         </hemistiche>
      </verse>
   </verses>
</poetry>
