     بلاق="١-١٤"
     درنبورج="١-١٠"
     البكاء="١-٨٨"
     هارون="١-٣٤"
     يعقوب="١-٦٨"
     رقم="١٠">

  <عنوان>
    <مقطع هوية='٥٨٥١٢'>هٰذَا بَاْبُ الْفَاْعِلِ الَّذِي يَتَعَدَّاْهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
  </عنوان>
  <مقطع هوية='٥٥٥٥٦'>وَذٰلِكَ قَوْلُكَ <قول هوية='٢٣٦٩٧'>ضَرَبَ عَبْدُ اللهِ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٨٧٤٥٥'>فَـ<حرف>عَبْدُ اللهِ</حرف> ارْتَفَعَ هٰهُنَا كَمَا ارْتَفَعَ فِي <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع هوية='١٣٠٩٤'>وَشَغَلْتَ <حرف>ضَرَبَ</حرف> بِهِ كَمَا شَغَلْتَ بِهِ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع هوية='٧٣٧٦٥'>وَانْتَصَبَ <حرف>زَيْدٌ</حرف> لِأَنَّهُ مَفْعُوْلٌ بِهِ تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
  <مقطع هوية='٥٤١٦٢'>فَإِنْ قَدَّمْتَ الْمَفْعُوْلَ وأَخَّرْتَ الْفَاْعِلَ</مقطع>
  <مقطع هوية='٩١٠٣٦'>جَرَى اللَّفْظُ كَمَا جَرَى فِي الأَوَّلِ</مقطع>
  <مقطع هوية='٤٤٦٢٥'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤٠٨٩٦'>ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٦٨٤٦٦'>لِأَنَّكَ إِنَّمَا أَرَدْتَ بِهِ مُؤَخَّرًا ما أَرَدْتَ بِهِ مُقَدَّمًا</مقطع>
  <مقطع هوية='٦٤٠٦٦'>وَلَمْ تُرِدْ أَنْ تَشْغَلَ الْفِعْلَ بِأَوَّلَ مِنْهُ</مقطع>
  <مقطع هوية='٨١١٩٠'>وَإِنْ كَاْنَ مُؤَخَّرًا فِي اللَّفْظِ</مقطع>
  <مقطع هوية='٩٣٧٤٠'>فَمِنْ ثُمَّ كَاْنَ حَدُّ اللَّفْظِ أَنْ يَكُوْنَ فِيهِ مُقَدَّمًا</مقطع>
  <مقطع هوية='٨٦٧٢٩'>وَهُوَ عَرَبِيٌّ جَيِّدٌ كَثِيْرٌ</مقطع>
  <مقطع هوية='٨٦٤٤٢'>كَأَنَّهُمْ إِنَّمَا يُقَدِّمُوْنَ الَّذِي بَيَاْنُهُ أَهَمُّ لَهُمْ</مقطع>
  <مقطع هوية='٤٢٠٨٦'>وَهُمْ بِبَيَاْنِهِ أَعْنَى</مقطع>
  <مقطع هوية='٥٤٨٠٩'>وَإِنْ كَاْنَا جَمِيْعًا يُهِمَّاْنِهِمْ وَيَعْنِيَاْنِهِمْ</مقطع>
  <مقطع هوية='٦٥٨٢٠'>وَاعْلَمْ أَنَّ الْفِعْلَ الَّذِي لَا يَتَعَدَّى الْفَاْعِلَ</مقطع>
  <مقطع هوية='١١٩٦٢'>يَتَعَدَّى إِلَى اسْمِ الْحَدَثَاْنِ الَّذِي أُخِذَ مِنْهُ</مقطع>
  <مقطع هوية='٠٨١٩٦'>لِأَنَّهُ إِنَّمَا يُذْكَرُ لَيَدُلَّ على الْحَدَثِ</مقطع>
  <مقطع هوية='٤٨٩٩٨'>أَلَا تَرَى أَنَّ قَوْلَكَ <قول هوية='١٤٩٨٣'>قَدْ ذَهَبَ</قول>
  </مقطع>
  <مقطع هوية='٢٦٢٧٢'>بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٩١٩٨٠'>قَدْ كَاْنَ مِنْهُ ذَهَاْبٌ</قول>
  </مقطع>
  <مقطع هوية='٩٧٢١٤'>وَإِذَا قُلْتَ <قول هوية='٥٧٩٣٧'>ضَرَبَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٧٤٢٢٤'>لَمْ يَسْتَبِنْ أَنَّ الْمَفْعُوْلَ زَيْدٌ أَوْ عَمْرٌو</مقطع>
  <مقطع هوية='٥٣٤٢٦'>وَلَا يَدُلُّ عَلَى صِنْفٍ</مقطع>
  <مقطع هوية='٠١٨٢٥'>كَمَا أَنَّ <حرف>ذَهَبَ</حرف> قَدْ دَلَّ على صِنْفٍ وَهُوَ <حرف>الذَّهَاْبُ</حرف></مقطع>
  <مقطع هوية='٨٧٠٦٧'>وَذٰلِكَ قَوْلُكَ <قول هوية='٩٥٠٥٧'>ذَهَبَ عَبْدُ اللهِ الذَّهَاْبَ الشَّدِيْدَ</قول></مقطع>
  <مقطع هوية='٦٦٤١٦'>وَ<قول هوية='٢٤٥٨١'>قَعَدَ قِعْدَةَ سَوْءٍ</قول>
  </مقطع>
  <مقطع هوية='٤٩٣١٦'>وَ<قول هوية='٠٤٧٩٠'>قَعَدَ قَعْدَتَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٦٩١٤٤'>لَمَّا عَمِلَ فِي الحَدَثِ</مقطع>
  <مقطع هوية='٤٩٥٠١'>عَمِلَ فِي الْمَرَّةِ مِنْهُ وَالْمَرَّتَيْنِ</مقطع>
  <مقطع هوية='٤٢٠١٢'>وَمَا يَكُوْنُ ضَرْبًا مِنْهُ</مقطع>
  <مقطع هوية='٤٢٤٨٣'>فَمِنْ ذٰلِكَ</مقطع>
  <مقطع هوية='٥٤٦٩٤'>
    <قول هوية='١٩٩٩٩'>قَعَدَ الْقُرْفُصَاْءَ</قول>
  </مقطع>
  <مقطع هوية='٣٨٩٦٤'>وَ<قول هوية='٨٧٩٥٧'>اشْتَمَلَ الصَّمَّاْءَ</قول>
  </مقطع>
  <مقطع هوية='٢٨٠١٨'>وَ<قول هوية='٦٤٨٨٤'>رَجَعَ الْقَهْقَرَى</قول></مقطع>
  <مقطع هوية='٨٤٥١٥'>لِأَنَّهُ ضَرْبٌ مِنْ فِعْلِهِ الَّذِي أُخِذَ مِنْهُ</مقطع>
  <مقطع هوية='٦١٩٣١'>ويَتَعَدَّى إلى الزَّمَاْنِ</مقطع>
  <مقطع هوية='٠٤٨٦٥'>نَحْوُ قَوْلِكَ <حرف>ذَهَبَ</حرف></مقطع>
  <مقطع هوية='٠٦٢٣٠'>لِأَنَّهُ بُنِيَ لِمَا مَضَى مِنْهُ وَمَا لَمْ يَمْضِ</مقطع>
  <مقطع هوية='٧٧٧١٨'>فَإِذَا قَاْلَ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع هوية='٢٥١٠٧'>فَهُوَ دَلِيْلٌ عَلَى أَنَّ الْحَدَثَ فِيْمَا مَضَى مِنَ الزَّمَاْنِ</مقطع>
  <مقطع هوية='٣٩٤١٧'>وَإِذَا قَاْلَ <حرف>سَيَذْهَبُ</حرف>
  </مقطع>
  <مقطع هوية='٨٣٣٩٨'>فَإِنَّهُ دَلِيْلٌ عَلَى أَنَّهُ يَكُوْنُ فِيْمَا يُسْتَقْبَلُ مِنَ الزَّمَاْنِ</مقطع>
  <مقطع هوية='٦٨٠٤٢'>فَفِيْهِ بَيَاْنُ مَا مَضَى وَمَا لَمْ يَمْضِ مِنْهُ</مقطع>
  <مقطع هوية='٤٧٤٢٤'>كَمَا أَنَّ فِيْهِ اسْتِدْلَالًا عَلَى وُقُوْعِ الْحَدَثِ</مقطع>
  <مقطع هوية='٥٠٣٥١'>وَذٰلِكَ قَوْلُكَ <قول هوية='٩٧٦١٦'>قَعَدَ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٠٢٠١٦'>وَ<قول هوية='٧٨٧٠٣'>سَيَقْعُدُ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٥٣٧٠٣'>وَتَقُوْلُ <قول هوية='٨٢٨١٤'>ذَهَبْتُ أَمْسِ</قول>
  </مقطع>
  <مقطع هوية='١٨٤٦٥'>وَ<قول هوية='٠٩٢٣٢'>سَأَذْهَبُ غَدًا</قول>
  </مقطع>
  <مقطع هوية='٨١٩٣٧'>فَإِنْ شِئْتَ لَمْ تَجْعَلْهُمَا ظَرْفًا</مقطع>
  <مقطع هوية='٠٨٩٠٩'>فَهُوَ يَجُوْزُ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاْءِ الزَّمَاْنِ</مقطع>
  <مقطع هوية='٦١٢٩٨'>كَمَا جَاْزَ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاْءِ الْحَدَثِ</مقطع>
  <مقطع هوية='٨٩٨٩١'>وَيَتَعَدَّى [هذا الْفِعْلُ]</مقطع>
  <مقطع هوية='٤٨٠٩٢'>إِلَى مَا اشْتُقَّ مِنْ لَفْظِهِ اسْمًا لِلْمَكاْنِ</مقطع>
  <مقطع هوية='٧١٢٣٠'>وَإِلَى الْمَكَاْنِ</مقطع>
  <مقطع هوية='٩٥٥٠٢'>لَأَنَّهُ إِذَا قَاْلَ <حرف>ذَهَبَ</حرف> أَوْ <حرف>قَعَدَ</حرف>
  </مقطع>
  <مقطع هوية='٩٧٢٣١'>فَقَدْ عُلِمَ أَنَّ لِلْحَدَثِ مَكَاْنًا وَإِنْ لَمْ يَذْكُرْهُ</مقطع>
  <مقطع هوية='٢٣٩٩٢'>كَمَا عُلِمَ أَنَّهُ قَدْ كَاْنَ ذَهَاْبٌ</مقطع>
  <مقطع هوية='١١٠٢٦'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٤٣٥٨٧'>
    <قول هوية='٨١٦٤٤'>ذَهَبْتُ الْمَذْهَبَ الْبَعِيْدَ</قول>
  </مقطع>
  <مقطع هوية='٠٠٦١٧'>وَ<قول هوية='٨١٣١٤'>جَلَسْتُ مَجْلِسًا حَسَنًا</قول>
  </مقطع>
  <مقطع هوية='٥٢٥٢٦'>وَ<قول هوية='٨٤٣٣٢'>قَعَدْتُ مَقْعَدًا كَرِيْمًا</قول>
  </مقطع>
  <مقطع هوية='١١٦١٩'>وَ<قول هوية='٤٢٢٣٠'>قَعَدْتُ الْمَكَاْنَ الَّذِي رَأَيْتَ</قول>
  </مقطع>
  <مقطع هوية='٠٥٥٠٤'>وَ<قول هوية='٤٢٤٨٨'>ذَهَبْتُ وَجْهًا مِنَ الْوُجُوْهِ</قول>
  </مقطع>
  <مقطع هوية='١٢٠٤٨'>وَقَدْ قَاْلَ بَعْضُهُمْ <قول هوية='٦٣٤٥٥'>ذَهَبْتُ الشَّاْمَ</قول>
  </مقطع>
  <مقطع هوية='٦٣٧٩٦'>يُشَبِّهُهُ بِالْمُبْهَمِ إِذَا كَاْنَ مَكَاْنًا</مقطع>
  <مقطع هوية='٦٩٥٩٩'>أَوْ كَاْنَ يَقَعُ عَلَيْهِ الْمَكَاْنُ وَالْمَذْهَبُ</مقطع>
  <مقطع هوية='٩٧٦٤٩'>وَهٰذَا شَاْذٌّ لِأَنَّهُ لَيْسَ فِي <حرف>ذَهَبَ</حرف> دَلِيْلًا عَلَى الشَّاْمِ</مقطع>
  <مقطع هوية='٩٧٢٢٨'>وَفِيْهِ دَلِيْلٌ عَلَى الْمَذْهَبِ وَالْمَكَاْنِ</مقطع>
  <مقطع هوية='٣٧٢٤٨'>وَمِثْلُ <حرف>ذَهَبْتُ الشَّاْمَ</حرف>
  <قول هوية='٩٨١٩٩'>دَخَلْتُ الْبَيْتَ</قول></مقطع>
  <مقطع هوية='٤٩١٣٣'>وَمِثْلُ ذٰلِكَ قَوْلُ سَاْعِدَةَ بْنِ جُؤَيَّةَ</مقطع>
  <شاهدة هوية='٥٧٨٣٩'>
    <بيت>
      <مصراع>لَدْنٌ بِهَزِّ الْكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
      <مصراع>فِيْهِ كَمَا <ثبات>عَسَلَ الطَّرِيْقَ</ثبات> الثَّعْلَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٩٣٦٨'>وَيَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَمْكِنَةِ</مقطع>
  <مقطع هوية='٣٨٧٤٧'>كَمَا يَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَزْمِنَةِ</مقطع>
  <مقطع هوية='٧٤٣٧٨'>لِأَنَّهُ وَقْتٌ يَقَعُ فِي الْمَكَاْنِ</مقطع>
  <مقطع هوية='٨٢١٦٧'>وَلَا يُخْتَصُّ بِهِ مَكَاْنٌ وَاْحِدٌ</مقطع>
  <مقطع هوية='١٥٧٦٤'>كَمَا أَنَّ ذَاكَ وَقْتٌ فِي الْأَزْمَاْنِ</مقطع>
  <مقطع هوية='٠٨٤١٧'>لَا يُخْتَصُّ به زَمَنٌ بِعَيْنِهِ</مقطع>
  <مقطع هوية='١٢٣٠٨'>فَلَمَّا صَاْرَ بِمَنْزِلَةِ الْوَقْتِ فِي الزَّمَنِ كَاْنَ مِثْلَهُ</مقطع>
  <مقطع هوية='٧١٢٨٧'>لِأنَّكَ قَدْ تَفْعَلُ بِالْأَمَاْكِنِ</مقطع>
  <مقطع هوية='٦٩٩٣٩'>ما تَفْعَلُ بِالْأَزْمِنَةِ</مقطع>
  <مقطع هوية='١٤٠٤٨'>وَإِنْ كَاْنَ الْأَزْمِنَةُ أَقْوَى فِي ذٰلِكَ</مقطع>
  <مقطع هوية='٥٧٧١٧'>وَكَذَلِكَ يَنْبَغِي أَنْ يَكُوْنَ</مقطع>
  <مقطع هوية='٠٤١٠٣'>إذْ صَاْرَ فِيْمَا هُوَ أَبْعَدُ نَحْوَ <حرف>ذَهَبْتُ الشَّاْمَ</حرف>
  </مقطع>
  <مقطع هوية='٣٠٣٦٢'>وَهُوَ قَوْلُكَ <قول هوية='٤٩٨٠٦'>ذَهَبْتُ فَرْسَخَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٣٨٨٧'>وَ<قول هوية='١٤٤١٤'>سِرْتُ الْمِيْلَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٢٦٢٣'>كَمَا تَقُولُ <قول هوية='٥٩٨٦٨'>ذَهَبْتُ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٠٦١٥٩'>وَ<قول هوية='١٦٣٢٣'>سِرْتُ الْيَوْمَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٤٣٠٦'>وَإِنَّمَا جُعِلَ فِي الزَّمَاْنِ أَقْوَى</مقطع>
  <مقطع هوية='٦٢٧١٢'>لِأَنَّ الْفِعْلَ بُنِيَ لِمَا مَضَى مِنْهُ وَمَا لَمْ يَمْضِ</مقطع>
  <مقطع هوية='٧١٠٢٣'>فَفِيْهِ بَيَاْنُ [الْفِعْلِ] مَتَى وَقَعَ</مقطع>
  <مقطع هوية='٧٤٩٧٩'>كَمَا أَنَّ فِيْهِ بَيَاْنَ أَنَّهُ قَدْ وَقَعَ الْمَصْدَرُ وَهُوَ الْحَدَثُ</مقطع>
  <مقطع هوية='٥٠٣٩١'>وَالْأَمَاْكِنُ لَمْ يُبْنَ لَهَا فِعْلٌ</مقطع>
  <مقطع هوية='٩٦٠٩٥'>وَلَيْسَتْ الْأَمَاْكِنُ بِمَصَاْدِرَ أُخِذَ مِنْهَا الْأَمْثِلَةُ</مقطع>
  <مقطع هوية='٤٨٧١٨'>وَالْأَمَاْكِنُ إِلَى الْأَنَاْسِىِّ وَنَحْوِهِمْ أَقْرَبُ</مقطع>
  <مقطع هوية='٨٣٢٩٢'>أَلَا تَرَى أَنَّهُمْ يَخُصُّوْنَهَا بِأَسْمَاْءٍ كَـ<حرف>زَيْدٍ</حرف> و<حرف>عَمْرٍو</حرف>
  </مقطع>
  <مقطع هوية='٣١٠٨٢'>وَفِي قَوْلِهِمْ <حرف>مَكَّةُ</حرف> و<حرف>عُمَاْنُ</حرف> وَنَحْوُهُمَا</مقطع>
  <مقطع هوية='٠٤٣٧٣'>وَتَكُوْنُ مِنْهَا خِلَقٌ</مقطع>
  <مقطع هوية='٤٥٣٥٧'>لَا يَكُوْنُ لِكُلِّ مَكَاْنٍ وَلَا فِيْهِ</مقطع>
  <مقطع هوية='٨١٨٢٣'>كَـ<حرف>الْجَبَلِ</حرف> وَ<حرف>الْوَاْدِي</حرف> وَ<حرف>الْبَحْرِ</حرف>
  </مقطع>
  <مقطع هوية='٨٢١٤٧'>وَالدَّهْرُ لَيْسَ كَذَلِكَ</مقطع>
  <مقطع هوية='٠٨٦٦٢'>وَالْأَمَاكِنُ لَهَا جُثَّةٌ</مقطع>
  <مقطع هوية='٤٣٠٣٥'>وَإِنَّمَا الدَّهْرُ مُضِىُّ اللَّيْلِ وَالنَّهَارِ</مقطع>
  <مقطع هوية='٥٥١١٣'>فَهُوَ إِلَى الْفِعْلِ أَقْرَبُ</مقطع>
