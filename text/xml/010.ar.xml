     يعقوب="١-٦٨"
     رقم="١٠">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ الْفَاعِلِ</مقطع>
    <مقطع رقم="٢">الِّذِي يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُولٍ</مقطع>
  </عنوان>
  <مقطع رقم="٣">وذلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٤">
    <قول رقم="١" مثال="١">ضَرَبَ عَبْدُ اللّٰهِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٥">فَـ<حرف>عَبْدُ اللّٰهِ</حرف> ارْتَفَعَ هٰهُنَا</مقطع>
  <مقطع رقم="٦">كَمَا ارْتَفَعَ في <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٧">وَشَغَلْتَ <حرف>ضَرَبَ</حرف> بِهِ</مقطع>
  <مقطع رقم="٨">كَمَا شَغَلْتَ بِهِ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٩">وَانْتَصَبَ <حرف>زَيْدٌ</حرف>
  </مقطع>
  <مقطع رقم="١٠">لِأَنَّهُ مَفْعُولٌ بِهِ</مقطع>
  <مقطع رقم="١١">تَعَدَّى إِلَيْهِ فِعْلُ الْفَاعِلِ</مقطع>
  <مقطع رقم="١٢">فَإِنْ قَدَّمْتَ الْمَفْعُولَ</مقطع>
  <مقطع رقم="١٣">وأَخَّرْتَ الْفَاعِلَ</مقطع>
  <مقطع رقم="١٤">جَرَى اللَّفْظُ كَمَا جَرَى في الأَوَّلِ</مقطع>
  <مقطع رقم="١٥">وذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="١٦">
    <قول رقم="٢" مثال="١">ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع رقم="١٧">لِأَنَّكَ إِنَّمَا أَرَدْتَ بِهِ مُؤَخَّرًا ما أَرَدْتَ بِهِ مُقَدَّمًا</مقطع>
  <مقطع رقم="١٨">وَلَمْ تُرِدْ أَنْ تَشْغَلَ الْفِعْلَ بِأَوَّلَ مِنْهُ</مقطع>
  <مقطع رقم="١٩">وَإِنْ كَانَ مُؤَخَّرًا في اللَّفْظِ</مقطع>
  <مقطع رقم="٢٠">فَمِنْ ثُمَّ كَانَ حَدُّ اللَّفْظِ أَنْ يَكونَ فِيهِ مُقَدَّمًا</مقطع>
  <مقطع رقم="٢١">وَهُوَ عَرَبِيٌّ جَيَّدٌ كَثِيرٌ</مقطع>
  <مقطع رقم="٢٢">كَأَنَّهُمْ إِنَّمَا</مقطع>
  <مقطع رقم="٢٣">يُقَدِّمُونَ الَّذِي بَيَانُهُ أَهَمُّ لَهُمْ</مقطع>
  <مقطع رقم="٢٤">وَهُمْ بِبَيَانِهِ أَعْنَى</مقطع>
  <مقطع رقم="٢٥">وَإِنْ كَانَا جَمِيعًا يُهِمَّانِهِمْ وَيَعْنِيَانِهِمْ</مقطع>
  <مقطع رقم="٢٦">وَاعْلَمْ أَنَّ الْفِعْلَ</مقطع>
  <مقطع رقم="٢٧">الَّذِي لا يَتَعَدَّى الْفَاعِلَ</مقطع>
  <مقطع رقم="٢٨">يَتَعَدَّى إِلَى اسْمِ الْحَدَثَانِ الَّذِي أُخِذَ مِنْهُ</مقطع>
  <مقطع رقم="٢٩">لِأَنَّهُ إِنَّمَا يُذْكَرُ لَيَدُلَّ على الْحَدَثِ</مقطع>
  <مقطع رقم="٣٠">أَلَا تَرَى أَنَّ قَوْلَكَ</مقطع>
  <مقطع رقم="٣١">
    <قول رقم="٣">قَدْ ذَهَبَ</قول>
  </مقطع>
  <مقطع رقم="٣٢">بِمَنْزِلَةِ قَوْلِكَ</مقطع>
  <مقطع رقم="٣٣">
    <قول رقم="٤">قَدْ كَانَ مِنْهُ ذَهَابٌ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَإِذَا قُلْتَ <قول رقم="٥">ضَرَبَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع رقم="٣٥">لَمْ يَسْتَبِنْ</مقطع>
  <مقطع رقم="٣٦">أَنَّ الْمَفْعُولَ زَيْدٌ أَوْ عَمْرٌو</مقطع>
  <مقطع رقم="٣٧">وَلا يَدُلُّ عَلَى صِنْفٍ</مقطع>
  <مقطع رقم="٣٨">كَمَا أَنَّ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٣٩">قَدْ دَلَّ على صِنْفٍ</مقطع>
  <مقطع رقم="٤٠">وَهُوَ<هارون مجلد="١" صفحة="٣٤"/>
  <حرف>الذَّهَابُ</حرف>
  </مقطع>
  <مقطع رقم="٤١">وذلك قولك</مقطع>
  <مقطع رقم="٤٢">
    <قول رقم="٦" مثال="١">ذَهَبَ عَبْدُ اللهِ الذَّهِابَ الشَّدِيدَ</قول>
  </مقطع>
  <مقطع رقم="٤٣">وَ<قول مثال="١" رقم="٧">قَعَدَ قِعْدَةَ سُوْءٍ</قول>
  </مقطع>
  <مقطع رقم="٤٤">وَ<قول مثال="١" رقم="٨">قَعَدَ قِعْدَتَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٤٥">لَمَّا عَمِلَ في الحَدَثِ</مقطع>
  <مقطع رقم="٤٦">عَمِلَ في الْمَرَّةِ مِنْهُ وَالْمَرَّتَيْنِ</مقطع>
  <مقطع رقم="٤٧">وَمَا يَكُونُ ضَرْبًا مِنْهُ</مقطع>
  <مقطع رقم="٤٨">فَمِنْ ذلِكَ</مقطع>
  <مقطع رقم="٤٩">
    <قول مثال="١" رقم="٩">قَعَدَ القُرْفُصَاءَ</قول>
  </مقطع>
  <مقطع رقم="٥٠">وَ<قول مثال="١" رقم="١٠">اشْتَمَلَ الصَّمَّاءَ</قول>
  </مقطع>
  <مقطع رقم="٥١">وَ<قول مثال="١" رقم="١١">رَجَعَ القَهْقَرَى</قول>
  </مقطع>
  <مقطع رقم="٥٢">لِأَنَّهُ ضَرْبٌ مِنْ فِعْلِهِ</مقطع>
  <مقطع رقم="٥٣">الَّذِي أُخِذَ مِنْهُ</مقطع>
  <مقطع رقم="٥٤">ويَتَعَدَّى إلى الزَّمَانِ</مقطع>
  <مقطع رقم="٥٥">نَحْوَ قَوْلِكَ <قول رقم="١٢">ذَهَبَ</قول>
  </مقطع>
  <مقطع رقم="٥٦">لِأَنَّهُ بُنِيَ لِمَا مَضَى مِنْهُ</مقطع>
  <مقطع رقم="٥٧">وَمَا لَمْ يَمْضِ</مقطع>
  <مقطع رقم="٥٨">فَإِذَا قَالَ <قول رقم="١٣">ذَهَبَ</قول>
  </مقطع>
  <مقطع رقم="٥٩">فَهُوَ دَلِيلٌ عَلَى أَنَّ الْحَدَثَ</مقطع>
  <مقطع رقم="٦٠">فِيمَا مَضَى مِنَ الزَّمَانِ</مقطع>
  <مقطع رقم="٦١">وَإِذَا قَالَ <قول رقم="١٤">سَيَذْهَبُ</قول>
  </مقطع>
  <مقطع رقم="٦٢">فَإِنَّهُ دَلِيلٌ عَلَى أَنَّهُ</مقطع>
  <مقطع رقم="٦٣">يَكُونُ فِيمَا يُسْتَقْبَلُ مِنَ الزَّمَانِ</مقطع>
  <مقطع رقم="٦٤">فَفِيهِ بَيَانُ مَا مَضَى</مقطع>
  <مقطع رقم="٦٥">وَمَا لَمْ يَمْضِ مِنْهُ</مقطع>
  <مقطع رقم="٦٦">كَمَا أَنَّ فِيهِ اسْتِدْلَالًا عَلَى وُقُوعِ الْحَدَثِ</مقطع>
  <مقطع رقم="٦٧">وَذٰلِكَ قَوْلُكَ <قول مثال="١" رقم="١٥">قَعَدَ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٦٨">وَ<قول مثال="١" رقم="١٦">سَيَقْعَدُ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٦٩">وتقول <قول مثال="١" رقم="١٧">ذهبتُ أَمْسِ</قول>
  </مقطع>
  <مقطع رقم="٧٠">وَ<قول مثال="١" رقم="١٨">سأَذهَب غدًا</قول>
  </مقطع>
  <مقطع رقم="٧١">فَإِنْ شِئْتَ لَمْ تَجْعَلْهُمَا ظَرْفًا</مقطع>
  <مقطع رقم="٧٢">فَهُوَ يَجُوزُ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاءِ الزَّمَانِ</مقطع>
  <مقطع رقم="٧٣">كَمَا جَازَ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاءِ الْحَدَثَ</مقطع>
  <مقطع رقم="٧٤">وَيَتَعَدَّى [هذا الْفِعْلُ] إِلَى مَا اشْتُقَّ مِنْ لَفْظِهِ</مقطع>
  <مقطع رقم="٧٥">اسْمًا لِلْمَكانِ وَإِلَى الْمَكَانِ</مقطع>
  <مقطع رقم="٧٦">لَأَنَّهُ إِذَا قَال <قول رقم="١٩">ذَهَبَ</قول> أَوْ <قول رقم="٢٠">قَعَدَ</قول>
  </مقطع>
  <مقطع رقم="٧٧">فَقَدْ عُلِمَ أَنَّ لِلْحَدَثِ مَكَانًا</مقطع>
  <مقطع رقم="٧٨">وَإِنْ لَمْ يَذْكُرُهُ</مقطع>
  <مقطع رقم="٧٩">كَمَا عُلِمَ أَنَّهُ قَدْ كَانَ ذَهَابٌ</مقطع>
  <مقطع رقم="٨٠">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٨١">
    <قول مثال="١" رقم="٢١">ذَهَبْتُ الْمَذْهَبَ الْبَعِيدَ</قول>
  </مقطع>
  <مقطع رقم="٨٢">وَ<قول مثال="١" رقم="٢٢">جَلَسْتُ مَجْلِسًا حَسَنًا</قول>
  </مقطع>
  <مقطع رقم="٨٣">وَ<قول مثال="١" رقم="٢٣">قَعَدْتُ مَقْعَدًا كَرِيمًا</قول>
  </مقطع>
  <مقطع رقم="٨٤">وَ<قول مثال="١" رقم="٢٤">قَعَدْتُ الْمَكَانَ الَّذِي رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٨٥">وَ<قول مثال="١" رقم="٢٥">ذَهَبْتُ وَجْهًا مِنَ الْوُجُوهِ</قول>
  </مقطع>
  <مقطع رقم="٨٦">وَقَدْ قَالَ بَعْضُهُمْ <قول مثال="١" رقم="٢٦">ذَهَبْتُ الشَّامَ</قول>
  </مقطع>
  <مقطع رقم="٨٧">يُشَبِّهُهُ بِالْمُبْهَمِ</مقطع>
  <مقطع رقم="٨٨">إِذَا كَانَ مَكَانًا</مقطع>
  <مقطع رقم="٨٩">أَوْ كَاْنَ يَقَعُ عَلَيْهِ الْمَكَانُ وَالْمَذْهَبُ</مقطع>
  <مقطع رقم="٩٠">وَهٰذَا شَاذٌّ لِأَنَّهُ لَيْسَ في <حرف>ذَهَبَ</حرف> دَلِيلًا عَلَى الشَّامِ</مقطع>
  <مقطع رقم="٩١">وَفِيهِ دَلِيلٌ عَلَى الْمَذْهَبِ وَالْمَكَانِ</مقطع>
  <مقطع رقم="٩٢">وَمِثْلُ <قول رقم="٢٧">ذَهَبْتُ الشَّامَ</قول>
  </مقطع>
  <مقطع رقم="٩٣">
    <قول مثال="١" رقم="٢٨">دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٩٤">وَمِثْلُ ذٰلِكَ قَوْلُ سَاْعِدَةَ بْنِ جُؤَيَّةَ</مقطع>
  <هارون مجلد="١" صفحة="٣٥"/>
  <شاهدة رقم="١" xml:id="١٠-١">
    <بيت>
      <مصراع>لَدْنٌ بِهَزِّ الْكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
      <مصراع>فِيْهِ كَمَا عَسَلَ الطَّرِيْقَ الثَّعْلَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٩٥">وَيَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَمْكِنَةِ</مقطع>
  <مقطع رقم="٩٦">كَمَا يَتَعَدَّىَ إِلَى مَا كَاْنَ وَقْتًا فِي الْأَزْمِنَةِ</مقطع>
  <مقطع رقم="٩٧">لِأَنَّهُ وَقْتٌ يَقَعُ فِي الْمَكَاْنِ</مقطع>
  <مقطع رقم="٩٨">وَلَا يَخْتَصُّ بِهِ مَكَاْنٌ وَاْحِدٌ</مقطع>
  <مقطع رقم="٩٩">كَمَا أَنَّ ذَاكَ وَقْتٌ فِي الْأَزْمَانِ</مقطع>
  <مقطع رقم="١٠٠">لَا يَخْتَصُّ به زَمَنٌ بِعَيْنِهِ</مقطع>
  <مقطع رقم="١٠١">فَلَمَّا صارَ بِمَنْزِلَةِ الْوَقْتِ في الزَّمَنِ كان مِثْلَهُ</مقطع>
  <مقطع رقم="١٠٢">لِأنَّكَ قَدْ تَفْعَلُ بِالْأَمَاكِنِ</مقطع>
  <مقطع رقم="١٠٣">ما تَفْعَلُ بِالْأَزْمِنَةِ</مقطع>
  <مقطع رقم="١٠٤">وَإِنْ كَانَ الْأَزْمِنَةِ أَقْوَى في ذَلِكَ</مقطع>
  <مقطع رقم="١٠٥">وَكَذَلِكَ يَنْبَغِي أَنْ يَكُونَ</مقطع>
  <مقطع رقم="١٠٦">إذْ صارَ فِيمَا هُوَ أَبْعَدُ</مقطع>
  <مقطع رقم="١٠٧">نَحْوَ<قول رقم="٢٩">ذَهَبْتُ الشَّامَ</قول>
  </مقطع>
  <مقطع رقم="١٠٨">وهو قَوْلُكَ <قول مثال="١" رقم="٣٠">ذَهَبْتُ فَرْسَخَيْن</قول>
  </مقطع>
  <مقطع رقم="١٠٩">وَ<قول مثال="١" رقم="٣١">سِرْتُ الْمِيلَيْنِ</قول>
  </مقطع>
  <مقطع رقم="١١٠">كما تَقُولُ <قول مثال="١" رقم="٣٢">ذَهَبْتُ شَهْرَيْن</قول>
  </مقطع>
  <مقطع رقم="١١١">وَ<قول مثال="١" رقم="٣٣">سِرْتُ الْيَوْمَيْنِ</قول>
  </مقطع>
  <مقطع رقم="١١٢">وِإِنَّمَا جُعِلَ في الزَّمَانِ أَقْوَى</مقطع>
  <مقطع رقم="١١٣">لِأَنَّ الْفِعْلَ بُنِيَ لِمَا مَضَى مِنْهُ</مقطع>
  <مقطع رقم="١١٤">وَمَا لَمْ يَمْضِ</مقطع>
  <مقطع رقم="١١٥">فَفِيهِ بَيَانُ [الْفِعْلِ] مَتَى وَقَعَ</مقطع>
  <مقطع رقم="١١٦">كَمَا أَنَّ فِيهِ بَيَانَ</مقطع>
  <مقطع رقم="١١٧">أَنَّهُ قَدْ وَقَعَ الْمَصْدَرُ</مقطع>
  <مقطع رقم="١١٨">وَهُوَ الحَدَثُ</مقطع>
  <مقطع رقم="١١٩">وَالْأَمَاكِنُ لَمْ يُبْنَ لَهَا فِعْلٌ</مقطع>
  <مقطع رقم="١٢٠">وَلَيْسَتْ الْأَمَاكِنُ بِمَصَادِرَ أُخِذَ مِنْهَا الْأَمْثِلَةُ</مقطع>
  <مقطع رقم="١٢١">وَالْأَمَاكِنُ إِلَى الْأَنَاسِىِّ وَنَحْوِهِمْ أَقْرَبُ</مقطع>
  <مقطع رقم="١٢٢">أَلَا تَرَى أَنَّهُمْ يَخُصُّونَهَا بِأَسْمَاءٍ كَـ<حرف>زَيْدٍ</حرف> و<حرف>عَمْرٍو</حرف>
  </مقطع>
  <مقطع رقم="١٢٣">وفي <هارون مجلد="١" صفحة="٣٦"/>قَوْلِهِمْ <حرف>مَكَّةُ</حرف> و<حرف>عُمَانُ</حرف> وَنَحْوُهُمَا</مقطع>
  <مقطع رقم="١٢٤">وَتَكُونُ مِنْهَا خِلَقٌ</مقطع>
  <مقطع رقم="١٢٥">لَا يَكُونُ لِكُلِّ مَكَانٍ وَلَا فِيهِ</مقطع>
  <مقطع رقم="١٢٦">كَـ<حرف>الْجَبَل</حرف> وَ<حرف>الْوِادِي</حرف> وَ<حرف>الْبَحْر</حرف>
  </مقطع>
  <مقطع رقم="١٢٧">وَالدَّهْرُ لَيْسَ كَذَلِكَ</مقطع>
  <مقطع رقم="١٢٨">وَالْأَمَاكِنُ لَهَا جُثَّةٌ</مقطع>
  <مقطع رقم="١٢٩">وَإِنَّمَا الدَّهْرُ مُضِىُّ اللَّيْلِ وَالنَّهَارِ</مقطع>
  <مقطع رقم="١٣٠">فَهُوَ إِلَى الْفِعْلِ أَقْرَبُ</مقطع>

