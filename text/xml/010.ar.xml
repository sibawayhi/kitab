<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
 بلاق="١-١٤"
 درنبورج="١-١٠"
 البكاء="١-٨٨"
 هارون="١-٣٤"
 يعقوب="١-٦٨"
 رقم="١٠">
 <عنوان>
 <مقطع رقم="١">هٰذَا بَاْبُ الْفَاْعِلِ الَّذِي يَتَعَدَّاْهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
 </عنوان>
 <مقطع رقم="٢">وذلِكَ قَوْلُكَ <قول رقم="١" مثال="١">ضَرَبَ عَبْدُ اللّٰهِ زَيْدًا</قول>
 </مقطع>
 <مقطع رقم="٣">فَـ<حرف>عَبْدُ اللّٰهِ</حرف> ارْتَفَعَ هٰهُنَا كَمَا ارْتَفَعَ في <حرف>ذَهَبَ</حرف>
 </مقطع>
 <مقطع رقم="٤">وَشَغَلْتَ <حرف>ضَرَبَ</حرف> بِهِ كَمَا شَغَلْتَ بِهِ <حرف>ذَهَبَ</حرف>
 </مقطع>
 <مقطع رقم="٥">وَانْتَصَبَ <حرف>زَيْدٌ</حرف> لِأَنَّهُ مَفْعُوْلٌ بِهِ تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
 <مقطع رقم="٦">فَإِنْ قَدَّمْتَ الْمَفْعُوْلَ وأَخَّرْتَ الْفَاْعِلَ</مقطع>
 <مقطع رقم="٧">جَرَى اللَّفْظُ كَمَا جَرَى في الأَوَّلِ</مقطع>
 <مقطع رقم="٨">وذٰلِكَ قَوْلُكَ <قول رقم="٢" مثال="١">ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
 </مقطع>
 <مقطع رقم="٩">لِأَنَّكَ إِنَّمَا أَرَدْتَ بِهِ مُؤَخَّرًا ما أَرَدْتَ بِهِ مُقَدَّمًا</مقطع>
 <مقطع رقم="١٠">وَلَمْ تُرِدْ أَنْ تَشْغَلَ الْفِعْلَ بِأَوَّلَ مِنْهُ</مقطع>
 <مقطع رقم="١١">وَإِنْ كَاْنَ مُؤَخَّرًا في اللَّفْظِ</مقطع>
 <مقطع رقم="١٢">فَمِنْ ثُمَّ كَاْنَ حَدُّ اللَّفْظِ أَنْ يَكُوْنَ فِيهِ مُقَدَّمًا</مقطع>
 <مقطع رقم="١٣">وَهُوَ عَرَبِيٌّ جَيِّدٌ كَثِيْرٌ</مقطع>
 <مقطع رقم="١٤">كَأَنَّهُمْ إِنَّمَا يُقَدِّمُوْنَ الَّذِي بَيَاْنُهُ أَهَمُّ لَهُمْ</مقطع>
 <مقطع رقم="١٥">وَهُمْ بِبَيَاْنِهِ أَعْنَى</مقطع>
 <مقطع رقم="١٦">وَإِنْ كَاْنَا جَمِيْعًا يُهِمَّاْنِهِمْ وَيَعْنِيَاْنِهِمْ</مقطع>
 <مقطع رقم="١٧">وَاعْلَمْ أَنَّ الْفِعْلَ الَّذِي لا يَتَعَدَّى الْفَاْعِلَ</مقطع>
 <مقطع رقم="١٨">يَتَعَدَّى إِلَى اسْمِ الْحَدَثَاْنِ الَّذِي أُخِذَ مِنْهُ</مقطع>
 <مقطع رقم="١٩">لِأَنَّهُ إِنَّمَا يُذْكَرُ لَيَدُلَّ على الْحَدَثِ</مقطع>
 <مقطع رقم="٢٠">أَلَا تَرَى أَنَّ قَوْلَكَ <قول رقم="٣">قَدْ ذَهَبَ</قول>
 </مقطع>
 <مقطع رقم="٢١">بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٤">قَدْ كَاْنَ مِنْهُ ذَهَاْبٌ</قول>
 </مقطع>
 <مقطع رقم="٢٢">وَإِذَا قُلْتَ <قول رقم="٥">ضَرَبَ عَبْدُ اللهِ</قول>
 </مقطع>
 <مقطع رقم="٢٣">لَمْ يَسْتَبِنْ أَنَّ الْمَفْعُوْلَ زَيْدٌ أَوْ عَمْرٌو</مقطع>
 <مقطع رقم="٢٤">وَلا يَدُلُّ عَلَى صِنْفٍ كَمَا أَنَّ <حرف>ذَهَبَ</حرف> قَدْ دَلَّ على صِنْفٍ</مقطع>
 <مقطع رقم="٢٥">وَهُوَ <حرف>الذَّهَابُ</حرف> وَذٰلِكَ قَوْلُكَ</مقطع>
 <مقطع رقم="٢٦">
 <قول رقم="٦" مثال="١">ذَهَبَ عَبْدُ اللهِ الذَّهَاْبَ الشَّدِيْدَ</قول>
 </مقطع>
 <مقطع رقم="٢٧">وَ<قول رقم="٧" مثال="١">قَعَدَ قِعْدَةَ سَوْءٍ</قول>
 </مقطع>
 <مقطع رقم="٢٨">وَ<قول رقم="٨" مثال="١">قَعَدَ قَعْدَتَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٢٩">لَمَّا عَمِلَ في الحَدَثِ</مقطع>
 <مقطع رقم="٣٠">عَمِلَ في الْمَرَّةِ مِنْهُ وَالْمَرَّتَيْنِ</مقطع>
 <مقطع رقم="٣١">وَمَا يَكُوْنُ ضَرْبًا مِنْهُ</مقطع>
 <مقطع رقم="٣٢">فَمِنْ ذلِكَ</مقطع>
 <مقطع رقم="٣٣">
 <قول رقم="٩" مثال="١">قَعَدَ القُرْفُصَاْءَ</قول>
 </مقطع>
 <مقطع رقم="٣٤">وَ<قول رقم="١٠" مثال="١">اشْتَمَلَ الصَّمَّاْءَ</قول>
 </مقطع>
 <مقطع رقم="٣٥">وَ<قول رقم="١١" مثال="١">رَجَعَ القَهْقَرَى</قول>
 </مقطع>
 <مقطع رقم="٣٦">لِأَنَّهُ ضَرْبٌ مِنْ فِعْلِهِ الَّذِي أُخِذَ مِنْهُ</مقطع>
 <مقطع رقم="٣٧">ويَتَعَدَّى إلى الزَّمَاْنِ</مقطع>
 <مقطع رقم="٣٨">نَحْوُ قَوْلِكَ <حرف>ذَهَبَ</حرف>
 </مقطع>
 <مقطع رقم="٣٩">لِأَنَّهُ بُنِيَ لِمَا مَضَى مِنْهُ وَمَا لَمْ يَمْضِ</مقطع>
 <مقطع رقم="٤٠">فَإِذَا قَاْلَ <حرف>ذَهَبَ</حرف>
 </مقطع>
 <مقطع رقم="٤١">فَهُوَ دَلِيْلٌ عَلَى أَنَّ الْحَدَثَ فِيْمَا مَضَى مِنَ الزَّمَاْنِ</مقطع>
 <مقطع رقم="٤٢">وَإِذَا قَاْلَ <حرف>سَيَذْهَبُ</حرف>
 </مقطع>
 <مقطع رقم="٤٣">فَإِنَّهُ دَلِيْلٌ عَلَى أَنَّهُ يَكُوْنُ فِيْمَا يُسْتَقْبَلُ مِنَ الزَّمَاْنِ</مقطع>
 <مقطع رقم="٤٤">فَفِيْهِ بَيَاْنُ مَا مَضَى وَمَا لَمْ يَمْضِ مِنْهُ</مقطع>
 <مقطع رقم="٤٥">كَمَا أَنَّ فِيْهِ اسْتِدْلَالًا عَلَى وُقُوْعِ الْحَدَثِ</مقطع>
 <مقطع رقم="٤٦">وَذٰلِكَ قَوْلُكَ <قول رقم="١٢" مثال="١">قَعَدَ شَهْرَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٤٧">وَ<قول رقم="١٣" مثال="١">سَيَقْعَدُ شَهْرَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٤٨">وَتَقُوْلُ <قول رقم="١٤" مثال="١">ذَهَبْتُ أَمْسِ</قول>
 </مقطع>
 <مقطع رقم="٤٩">وَ<قول رقم="١٥" مثال="١">سَأَذْهَبُ غَدًا</قول>
 </مقطع>
 <مقطع رقم="٥٠">فَإِنْ شِئْتَ لَمْ تَجْعَلْهُمَا ظَرْفًا</مقطع>
 <مقطع رقم="٥١">فَهُوَ يَجُوْزُ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاْءِ الزَّمَاْنِ</مقطع>
 <مقطع رقم="٥٢">كَمَا جَاْزَ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاْءِ الْحَدَثِ</مقطع>
 <مقطع رقم="٥٣">وَيَتَعَدَّى [هذا الْفِعْلُ]</مقطع>
 <مقطع رقم="٥٤">إِلَى مَا اشْتُقَّ مِنْ لَفْظِهِ اسْمًا لِلْمَكاْنِ</مقطع>
 <مقطع رقم="٥٥">وَإِلَى الْمَكَاْنِ</مقطع>
 <مقطع رقم="٥٦">لَأَنَّهُ إِذَا قَاْلَ <حرف>ذَهَبَ</حرف> أَوْ <حرف>قَعَدَ</حرف>
 </مقطع>
 <مقطع رقم="٥٧">فَقَدْ عُلِمَ أَنَّ لِلْحَدَثِ مَكَاْنًا وَإِنْ لَمْ يَذْكُرْهُ</مقطع>
 <مقطع رقم="٥٨">كَمَا عُلِمَ أَنَّهُ قَدْ كَاْنَ ذَهَاْبٌ</مقطع>
 <مقطع رقم="٥٩">وَذٰلِكَ قَوْلُكَ</مقطع>
 <مقطع رقم="٦٠">
 <قول رقم="١٦" مثال="١">ذَهَبْتُ الْمَذْهَبَ الْبَعِيْدَ</قول>
 </مقطع>
 <مقطع رقم="٦١">وَ<قول رقم="١٧" مثال="١">جَلَسْتُ مَجْلِسًا حَسَنًا</قول>
 </مقطع>
 <مقطع رقم="٦٢">وَ<قول رقم="١٨" مثال="١">قَعَدْتُ مَقْعَدًا كَرِيْمًا</قول>
 </مقطع>
 <مقطع رقم="٦٣">وَ<قول رقم="١٩" مثال="١">قَعَدْتُ الْمَكَاْنَ الَّذِي رَأَيْتَ</قول>
 </مقطع>
 <مقطع رقم="٦٤">وَ<قول رقم="٢٠" مثال="١">ذَهَبْتُ وَجْهًا مِنَ الْوُجُوْهِ</قول>
 </مقطع>
 <مقطع رقم="٦٥">وَقَدْ قَاْلَ بَعْضُهُمْ <قول رقم="٢١" مثال="١">ذَهَبْتُ الشَّاْمَ</قول>
 </مقطع>
 <مقطع رقم="٦٦">يُشَبِّهُهُ بِالْمُبْهَمِ إِذَا كَاْنَ مَكَاْنًا</مقطع>
 <مقطع رقم="٦٧">أَوْ كَاْنَ يَقَعُ عَلَيْهِ الْمَكَاْنُ وَالْمَذْهَبُ</مقطع>
 <مقطع رقم="٦٨">وَهٰذَا شَاْذٌّ لِأَنَّهُ لَيْسَ في <حرف>ذَهَبَ</حرف> دَلِيْلًا عَلَى الشَّاْمِ</مقطع>
 <مقطع رقم="٦٩">وَفِيْهِ دَلِيْلٌ عَلَى الْمَذْهَبِ وَالْمَكَاْنِ</مقطع>
 <مقطع رقم="٧٠">وَمِثْلُ <حرف>ذَهَبْتُ الشَّاْمَ</حرف>
 <قول رقم="٢٢" مثال="١">دَخَلْتُ الْبَيْتَ</قول>
 </مقطع>
 <مقطع رقم="٧١">وَمِثْلُ ذٰلِكَ قَوْلُ سَاْعِدَةَ بْنِ جُؤَيَّةَ</مقطع>
 <شاهدة مقطع="٧٢" رقم="١">
 <بيت>
 <مصراع>لَدْنٌ بِهَزِّ الْكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
 <مصراع>فِيْهِ كَمَا <ثبات>عَسَلَ الطَّرِيْقَ</ثبات> الثَّعْلَبُ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٧٣">وَيَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَمْكِنَةِ</مقطع>
 <مقطع رقم="٧٤">كَمَا يَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَزْمِنَةِ</مقطع>
 <مقطع رقم="٧٥">لِأَنَّهُ وَقْتٌ يَقَعُ فِي الْمَكَاْنِ</مقطع>
 <مقطع رقم="٧٦">وَلَا يَخْتَصُّ بِهِ مَكَاْنٌ وَاْحِدٌ</مقطع>
 <مقطع رقم="٧٧">كَمَا أَنَّ ذَاكَ وَقْتٌ فِي الْأَزْمَاْنِ</مقطع>
 <مقطع رقم="٧٨">لَا يَخْتَصُّ به زَمَنٌ بِعَيْنِهِ</مقطع>
 <مقطع رقم="٧٩">فَلَمَّا صَاْرَ بِمَنْزِلَةِ الْوَقْتِ فِي الزَّمَنِ كَاْنَ مِثْلَهُ</مقطع>
 <مقطع رقم="٨٠">لِأنَّكَ قَدْ تَفْعَلُ بِالْأَمَاْكِنِ</مقطع>
 <مقطع رقم="٨١">ما تَفْعَلُ بِالْأَزْمِنَةِ</مقطع>
 <مقطع رقم="٨٢">وَإِنْ كَاْنَ الْأَزْمِنَةُ أَقْوَى في ذٰلِكَ</مقطع>
 <مقطع رقم="٨٣">وَكَذَلِكَ يَنْبَغِي أَنْ يَكُوْنَ</مقطع>
 <مقطع رقم="٨٤">إذْ صَاْرَ فِيْمَا هُوَ أَبْعَدُ نَحْوَ <حرف>ذَهَبْتُ الشَّاْمَ</حرف>
 </مقطع>
 <مقطع رقم="٨٥">وَهُوَ قَوْلُكَ <قول رقم="٢٣" مثال="١">ذَهَبْتُ فَرْسَخَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٨٦">وَ<قول رقم="٢٤" مثال="١">سِرْتُ الْمِيْلَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٨٧">كَمَا تَقُولُ <قول رقم="٢٥" مثال="١">ذَهَبْتُ شَهْرَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٨٨">وَ<قول رقم="٢٦" مثال="١">سِرْتُ الْيَوْمَيْنِ</قول>
 </مقطع>
 <مقطع رقم="٨٩">وَإِنَّمَا جُعِلَ في الزَّمَاْنِ أَقْوَى</مقطع>
 <مقطع رقم="٩٠">لِأَنَّ الْفِعْلَ بُنِيَ لِمَا مَضَى مِنْهُ وَمَا لَمْ يَمْضِ</مقطع>
 <مقطع رقم="٩١">فَفِيْهِ بَيَاْنُ [الْفِعْلِ] مَتَى وَقَعَ</مقطع>
 <مقطع رقم="٩٢">كَمَا أَنَّ فِيْهِ بَيَاْنَ أَنَّهُ قَدْ وَقَعَ الْمَصْدَرُ وَهُوَ الْحَدَثُ</مقطع>
 <مقطع رقم="٩٣">وَالْأَمَاْكِنُ لَمْ يُبْنَ لَهَا فِعْلٌ</مقطع>
 <مقطع رقم="٩٤">وَلَيْسَتْ الْأَمَاْكِنُ بِمَصَاْدِرَ أُخِذَ مِنْهَا الْأَمْثِلَةُ</مقطع>
 <مقطع رقم="٩٥">وَالْأَمَاْكِنُ إِلَى الْأَنَاْسِىِّ وَنَحْوِهِمْ أَقْرَبُ</مقطع>
 <مقطع رقم="٩٦">أَلَا تَرَى أَنَّهُمْ يَخُصُّوْنَهَا بِأَسْمَاْءٍ كَـ<حرف>زَيْدٍ</حرف> و<حرف>عَمْرٍو</حرف>
 </مقطع>
 <مقطع رقم="٩٧">وَفِي قَوْلِهِمْ <حرف>مَكَّةُ</حرف> و<حرف>عُمَاْنُ</حرف> وَنَحْوِهِمَا</مقطع>
 <مقطع رقم="٩٨">وَتَكُوْنُ مِنْهَا خِلَقٌ</مقطع>
 <مقطع رقم="٩٩">لَا يَكُوْنُ لِكُلِّ مَكَاْنٍ وَلَا فِيْهِ</مقطع>
 <مقطع رقم="١٠٠">كَـ<حرف>الْجَبَلِ</حرف> وَ<حرف>الْوَاْدِي</حرف> وَ<حرف>الْبَحْرِ</حرف>
 </مقطع>
