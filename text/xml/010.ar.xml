<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٤"
     درنبورج="١-١٠"
     البكاء="١-٨٨"
     هارون="١-٣٤"
     يعقوب="١-٦٨"
     رقم="١٠">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الْفَاْعِلِ الَّذِي يَتَعَدَّاْهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وذلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣">
    <قول رقم="١" مثال="١">ضَرَبَ عَبْدُ اللّٰهِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤">فَـ<حرف>عَبْدُ اللّٰهِ</حرف> ارْتَفَعَ هٰهُنَا كَمَا ارْتَفَعَ في <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٥">وَشَغَلْتَ <حرف>ضَرَبَ</حرف> بِهِ كَمَا شَغَلْتَ بِهِ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٦">وَانْتَصَبَ <حرف>زَيْدٌ</حرف> لِأَنَّهُ مَفْعُولٌ بِهِ تَعَدَّى إِلَيْهِ فِعْلُ الْفَاعِلِ</مقطع>
  <مقطع رقم="٧">فَإِنْ قَدَّمْتَ الْمَفْعُوْلَ وأَخَّرْتَ الْفَاْعِلَ</مقطع>
  <مقطع رقم="٨">جَرَى اللَّفْظُ كَمَا جَرَى في الأَوَّلِ</مقطع>
  <مقطع رقم="٩">وذٰلِكَ قَوْلُكَ <قول رقم="٢" مثال="١">ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع رقم="١٠">لِأَنَّكَ إِنَّمَا أَرَدْتَ بِهِ مُؤَخَّرًا ما أَرَدْتَ بِهِ مُقَدَّمًا</مقطع>
  <مقطع رقم="١١">وَلَمْ تُرِدْ أَنْ تَشْغَلَ الْفِعْلَ بِأَوَّلَ مِنْهُ</مقطع>
  <مقطع رقم="١٢">وَإِنْ كَاْنَ مُؤَخَّرًا في اللَّفْظِ</مقطع>
  <مقطع رقم="١٣">فَمِنْ ثُمَّ كَاْنَ حَدُّ اللَّفْظِ أَنْ يَكُوْنَ فِيهِ مُقَدَّمًا</مقطع>
  <مقطع رقم="١٤">وَهُوَ عَرَبِيٌّ جَيَّدٌ كَثِيْرٌ</مقطع>
  <مقطع رقم="١٥">كَأَنَّهُمْ إِنَّمَا يُقَدِّمُوْنَ الَّذِي بَيَاْنُهُ أَهَمُّ لَهُمْ وَهُمْ بِبَيَاْنِهِ أَعْنَى</مقطع>
  <مقطع رقم="١٦">وَإِنْ كَاْنَا جَمِيْعًا يُهِمَّاْنِهِمْ وَيَعْنِيَاْنِهِمْ</مقطع>
  <مقطع رقم="١٧">وَاعْلَمْ أَنَّ الْفِعْلَ الَّذِي لا يَتَعَدَّى الْفَاْعِلَ</مقطع>
  <مقطع رقم="١٨">يَتَعَدَّى إِلَى اسْمِ الْحَدَثَاْنِ الَّذِي أُخِذَ مِنْهُ</مقطع>
  <مقطع رقم="١٩">لِأَنَّهُ إِنَّمَا يُذْكَرُ لَيَدُلَّ على الْحَدَثِ</مقطع>
  <مقطع رقم="٢٠">أَلَا تَرَى أَنَّ قَوْلَكَ <قول رقم="٣">قَدْ ذَهَبَ</قول>
  </مقطع>
  <مقطع رقم="٢١">بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٤">قَدْ كَاْنَ مِنْهُ ذَهَاْبٌ</قول>
  </مقطع>
  <مقطع رقم="٢٢">وَإِذَا قُلْتَ <قول رقم="٥">ضَرَبَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع رقم="٢٣">لَمْ يَسْتَبِنْ أَنَّ الْمَفْعُولَ زَيْدٌ أَوْ عَمْرٌو</مقطع>
  <مقطع رقم="٢٤">وَلا يَدُلُّ عَلَى صِنْفٍ</مقطع>
  <مقطع رقم="٢٥">كَمَا أَنَّ <حرف>ذَهَبَ</حرف> قَدْ دَلَّ على صِنْفٍ وَهُوَ <حرف>الذَّهَابُ</حرف>
  </مقطع>
  <مقطع رقم="٢٦">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٧">
    <قول رقم="٦" مثال="١">ذَهَبَ عَبْدُ اللهِ الذَّهَاْبَ الشَّدِيْدَ</قول>
  </مقطع>
  <مقطع رقم="٢٨">وَ<قول رقم="٧" مثال="١">قَعَدَ قِعْدَةَ سَوْءٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩">وَ<قول رقم="٨" مثال="١">قَعَدَ قَعْدَتَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٣٠">لَمَّا عَمِلَ في الحَدَثِ</مقطع>
  <مقطع رقم="٣١">عَمِلَ في الْمَرَّةِ مِنْهُ وَالْمَرَّتَيْنِ</مقطع>
  <مقطع رقم="٣٢">وَمَا يَكُونُ ضَرْبًا مِنْهُ</مقطع>
  <مقطع رقم="٣٣">فَمِنْ ذلِكَ</مقطع>
  <مقطع رقم="٣٤">
    <قول رقم="٩" مثال="١">قَعَدَ القُرْفُصَاْءَ</قول>
  </مقطع>
  <مقطع رقم="٣٥">وَ<قول رقم="١٠" مثال="١">اشْتَمَلَ الصَّمَّاْءَ</قول>
  </مقطع>
  <مقطع رقم="٣٦">وَ<قول رقم="١١" مثال="١">رَجَعَ القَهْقَرَى</قول>
  </مقطع>
  <مقطع رقم="٣٧">لِأَنَّهُ ضَرْبٌ مِنْ فِعْلِهِ الَّذِي أُخِذَ مِنْهُ</مقطع>
  <مقطع رقم="٣٨">ويَتَعَدَّى إلى الزَّمَاْنِ</مقطع>
  <مقطع رقم="٣٩">نَحْوُ قَوْلِكَ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٤٠">لِأَنَّهُ بُنِيَ لِمَا مَضَى مِنْهُ وَمَا لَمْ يَمْضِ</مقطع>
  <مقطع رقم="٤١">فَإِذَا قَاْلَ <حرف>ذَهَبَ</حرف>
  </مقطع>
  <مقطع رقم="٤٢">فَهُوَ دَلِيْلٌ عَلَى أَنَّ الْحَدَثَ فِيْمَا مَضَى مِنَ الزَّمَاْنِ</مقطع>
  <مقطع رقم="٤٣">وَإِذَا قَاْلَ <حرف>سَيَذْهَبُ</حرف>
  </مقطع>
  <مقطع رقم="٤٤">فَإِنَّهُ دَلِيْلٌ عَلَى أَنَّهُ يَكُوْنُ فِيْمَا يُسْتَقْبَلُ مِنَ الزَّمَاْنِ</مقطع>
  <مقطع رقم="٤٥">فَفِيْهِ بَيَاْنُ مَا مَضَى وَمَا لَمْ يَمْضِ مِنْهُ</مقطع>
  <مقطع رقم="٤٦">كَمَا أَنَّ فِيْهِ اسْتِدْلَالًا عَلَى وُقُوْعِ الْحَدَثِ</مقطع>
  <مقطع رقم="٤٧">وَذٰلِكَ قَوْلُكَ <قول رقم="١٢" مثال="١">قَعَدَ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٤٨">وَ<قول رقم="١٣" مثال="١">سَيَقْعَدُ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٤٩">وَتَقُوْلُ <قول رقم="١٤" مثال="١">ذَهَبْتُ أَمْسِ</قول>
  </مقطع>
  <مقطع رقم="٥٠">وَ<قول رقم="١٥" مثال="١">سَأَذْهَبُ غَدًا</قول>
  </مقطع>
  <مقطع رقم="٥١">فَإِنْ شِئْتَ لَمْ تَجْعَلْهُمَا ظَرْفًا</مقطع>
  <مقطع رقم="٥٢">فَهُوَ يَجُوْزُ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاْءِ الزَّمَاْنِ</مقطع>
  <مقطع رقم="٥٣">كَمَا جَاْزَ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاْءِ الْحَدَثِ</مقطع>
  <مقطع رقم="٥٤">وَيَتَعَدَّى [هذا الْفِعْلُ]</مقطع>
  <مقطع رقم="٥٥">إِلَى مَا اشْتُقَّ مِنْ لَفْظِهِ اسْمًا لِلْمَكاْنِ</مقطع>
  <مقطع رقم="٥٦">وَإِلَى الْمَكَاْنِ</مقطع>
  <مقطع رقم="٥٧">لَأَنَّهُ إِذَا قَاْلَ <حرف>ذَهَبَ</حرف> أَوْ <حرف>قَعَدَ</حرف></مقطع>
  <مقطع رقم="٥٨">فَقَدْ عُلِمَ أَنَّ لِلْحَدَثِ مَكَاْنًا وَإِنْ لَمْ يَذْكُرُهُ</مقطع>
  <مقطع رقم="٥٩">كَمَا عُلِمَ أَنَّهُ قَدْ كَاْنَ ذَهَاْبٌ</مقطع>
  <مقطع رقم="٦٠">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٦١">
    <قول رقم="١٦" مثال="١">ذَهَبْتُ الْمَذْهَبَ الْبَعِيْدَ</قول>
  </مقطع>
  <مقطع رقم="٦٢">وَ<قول رقم="١٧" مثال="١">جَلَسْتُ مَجْلِسًا حَسَنًا</قول>
  </مقطع>
  <مقطع رقم="٦٣">وَ<قول رقم="١٨" مثال="١">قَعَدْتُ مَقْعَدًا كَرِيْمًا</قول>
  </مقطع>
  <مقطع رقم="٦٤">وَ<قول رقم="١٩" مثال="١">قَعَدْتُ الْمَكَاْنَ الَّذِي رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٦٥">وَ<قول رقم="٢٠" مثال="١">ذَهَبْتُ وَجْهًا مِنَ الْوُجُوْهِ</قول>
  </مقطع>
  <مقطع رقم="٦٦">وَقَدْ قَاْلَ بَعْضُهُمْ <قول رقم="٢١" مثال="١">ذَهَبْتُ الشَّاْمَ</قول>
  </مقطع>
  <مقطع رقم="٦٧">يُشَبِّهُهُ بِالْمُبْهَمِ إِذَا كَاْنَ مَكَاْنًا</مقطع>
  <مقطع رقم="٦٨">أَوْ كَاْنَ يَقَعُ عَلَيْهِ الْمَكَاْنُ وَالْمَذْهَبُ</مقطع>
  <مقطع رقم="٦٩">وَهٰذَا شَاْذٌّ لِأَنَّهُ لَيْسَ في <حرف>ذَهَبَ</حرف> دَلِيْلًا عَلَى الشَّاْمِ</مقطع>
  <مقطع رقم="٧٠">وَفِيْهِ دَلِيْلٌ عَلَى الْمَذْهَبِ وَالْمَكَاْنِ</مقطع>
  <مقطع رقم="٧١">وَمِثْلُ <حرف>ذَهَبْتُ الشَّاْمَ</حرف>
  <قول رقم="٢٢" مثال="١">دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٧٢">وَمِثْلُ ذٰلِكَ قَوْلُ سَاْعِدَةَ بْنِ جُؤَيَّةَ</مقطع>
  <شاهدة مقطع="٧٣" رقم="١">
    <بيت>
      <مصراع>لَدْنٌ بِهَزِّ الْكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
      <مصراع>فِيْهِ كَمَا <ثبات>عَسَلَ الطَّرِيْقَ</ثبات> الثَّعْلَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٤">وَيَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَمْكِنَةِ</مقطع>
  <مقطع رقم="٧٥">كَمَا يَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَزْمِنَةِ</مقطع>
  <مقطع رقم="٧٦">لِأَنَّهُ وَقْتٌ يَقَعُ فِي الْمَكَاْنِ</مقطع>
  <مقطع رقم="٧٧">وَلَا يَخْتَصُّ بِهِ مَكَاْنٌ وَاْحِدٌ</مقطع>
  <مقطع رقم="٧٨">كَمَا أَنَّ ذَاكَ وَقْتٌ فِي الْأَزْمَاْنِ</مقطع>
  <مقطع رقم="٧٩">لَا يَخْتَصُّ به زَمَنٌ بِعَيْنِهِ</مقطع>
  <مقطع رقم="٨٠">فَلَمَّا صَاْرَ بِمَنْزِلَةِ الْوَقْتِ فِي الزَّمَنِ كَاْنَ مِثْلَهُ</مقطع>
  <مقطع رقم="٨١">لِأنَّكَ قَدْ تَفْعَلُ بِالْأَمَاْكِنِ</مقطع>
  <مقطع رقم="٨٢">ما تَفْعَلُ بِالْأَزْمِنَةِ</مقطع>
  <مقطع رقم="٨٣">وَإِنْ كَاْنَ الْأَزْمِنَةُ أَقْوَى في ذٰلِكَ</مقطع>
  <مقطع رقم="٨٤">وَكَذَلِكَ يَنْبَغِي أَنْ يَكُوْنَ</مقطع>
  <مقطع رقم="٨٥">إذْ صَاْرَ فِيْمَا هُوَ أَبْعَدُ نَحْوَ <حرف>ذَهَبْتُ الشَّاْمَ</حرف>
  </مقطع>
  <مقطع رقم="٨٦">وَهُوَ قَوْلُكَ <قول رقم="٢٣" مثال="١">ذَهَبْتُ فَرْسَخَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَ<قول رقم="٢٤" مثال="١">سِرْتُ الْمِيْلَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٨٨">كَمَا تَقُولُ <قول رقم="٢٥" مثال="١">ذَهَبْتُ شَهْرَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٨٩">وَ<قول رقم="٢٦" مثال="١">سِرْتُ الْيَوْمَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٩٠">وَإِنَّمَا جُعِلَ في الزَّمَاْنِ أَقْوَى</مقطع>
  <مقطع رقم="٩١">لِأَنَّ الْفِعْلَ بُنِيَ لِمَا مَضَى مِنْهُ وَمَا لَمْ يَمْضِ</مقطع>
  <مقطع رقم="٩٢">فَفِيْهِ بَيَاْنُ [الْفِعْلِ] مَتَى وَقَعَ</مقطع>
  <مقطع رقم="٩٣">كَمَا أَنَّ فِيْهِ بَيَاْنَ أَنَّهُ قَدْ وَقَعَ الْمَصْدَرُ وَهُوَ الْحَدَثُ</مقطع>
  <مقطع رقم="٩٤">وَالْأَمَاْكِنُ لَمْ يُبْنَ لَهَا فِعْلٌ</مقطع>
  <مقطع رقم="٩٥">وَلَيْسَتْ الْأَمَاْكِنُ بِمَصَاْدِرَ أُخِذَ مِنْهَا الْأَمْثِلَةُ</مقطع>
  <مقطع رقم="٩٦">وَالْأَمَاْكِنُ إِلَى الْأَنَاْسِىِّ وَنَحْوِهِمْ أَقْرَبُ</مقطع>
  <مقطع رقم="٩٧">أَلَا تَرَى أَنَّهُمْ يَخُصُّوْنَهَا بِأَسْمَاْءٍ كَـ<حرف>زَيْدٍ</حرف> و<حرف>عَمْرٍو</حرف>
  </مقطع>
  <مقطع رقم="٩٨">وَفِي قَوْلِهِمْ <حرف>مَكَّةُ</حرف> و<حرف>عُمَاْنُ</حرف> وَنَحْوِهِمَا</مقطع>
  <مقطع رقم="٩٩">وَتَكُوْنُ مِنْهَا خِلَقٌ</مقطع>
  <مقطع رقم="١٠٠">لَا يَكُوْنُ لِكُلِّ مَكَاْنٍ وَلَا فِيْهِ</مقطع>
  <مقطع رقم="١٠١">كَـ<حرف>الْجَبَلِ</حرف> وَ<حرف>الْوَاْدِي</حرف> وَ<حرف>الْبَحْرِ</حرف>
  </مقطع>
  <مقطع رقم="١٠٢">وَالدَّهْرُ لَيْسَ كَذَلِكَ</مقطع>
  <مقطع رقم="١٠٣">وَالْأَمَاكِنُ لَهَا جُثَّةٌ</مقطع>
  <مقطع رقم="١٠٤">وَإِنَّمَا الدَّهْرُ مُضِىُّ اللَّيْلِ وَالنَّهَارِ</مقطع>
  <مقطع رقم="١٠٥">فَهُوَ إِلَى الْفِعْلِ أَقْرَبُ</مقطع>
