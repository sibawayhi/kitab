<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٢٥٢"
     درنبورج="٢-٢٧٠"
     البكاء="٥-٤٠٩"
     هارون="٤-١٠٠"
     يعقوب="٤-٢١٨"
     رقم="٤٦٩">

  <التحرير>
    <تشكيل  نسخة="1" نسبة="0"/>
    <تقطيع  نسخة="1"/>
    <أقوال  نسخة="1" نسبة="0"/>
    <شواهد  نسخة="1" نسبة="0"/>
  </التحرير>

  <عنوان>
    <مقطع>هذا باب ما تقول العرب فيه ما أفعله وليس له فعل وإنما يحفظ هذا حفظاً ولا يقاس</مقطع>
  </عنوان>
  <مقطع>قالوا أحنك الشاتين وأحنك البعيرين كما قالوا آكل الشاتين كأنهم قالوا حنك ونحو ذلك فإنما جاءوا بأفعل على نحو هذا وإن لم يتكلموا به</مقطع>
  <مقطع>وقالوا آبل الناس كلهم كما قالوا أرعى الناس كلهم وكأنهم قد قالوا أبل يأبل وقالوا رجل آبل وإن لم يتكلموا بالفعل وقولهم آبل الناس بمنزلة آبل منه لأن ما جاز فيه أفعل الناس جاز فيه هذا وما لم يجز فيه ذلك لم يجز فيه هذا</مقطع>
  <مقطع>وهذه الأسماء التي ليس فيها فعل ليس القياس فيها أن يقال أفعل منه ونحو ذلك وقد قالوا فلانٌ آبل منه كما قالوا أحنك الشاتين</مقطع>
  <هارون مجلد="٤" صفحة="١٠٠"/>
</باب>
