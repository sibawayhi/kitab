<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٨٧"
     درنبورج="١-١٥٦"
     البكاء="١-٤٧٣"
     هارون="١-٣٧٣"
     يعقوب="١-٤٤١"
     رقم="٨٤">

  <عنوان>
    <مقطع رقم="١">وَهٰذَا مَا جَاْءَ مِنْهُ مُضَاْفًا مَعْرِفَةً</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ <قول مثال="١" رقم="١">طَلَبْتَهُ جَهْدَكَ</قول>
  </مقطع>
  <مقطع رقم="٣">كَأَنَّهُ قَاْلَ <حرف>اجْتِهَاْدًا</حرف>
  </مقطع>
  <مقطع رقم="٤">وَكَذٰلِكَ <قول رقم="٢">طَلَبْتَهُ طَاْقَتَكَ</قول>
  </مقطع>
  <مقطع رقم="٥">وَلَيْسَ كُلُّ مَصْدَرٍ يُضَاْفُ</مقطع>
  <مقطع رقم="٦">كَمَا أَنَّهُ لَيْسَ كُلُّ مَصْدَرٍ تَدْخُلُهُ الْأَلِفُ وَاللَّاْمُ فِي هٰذَا الْبَاْبِ</مقطع>
  <مقطع رقم="٧">وَأمَّا <قول رقم="٣">فَعَلْتُ طَاْقَتِي</قول> فَلَا تُجْعَلُ نَكِرَةً</مقطع>
  <مقطع رقم="٨">كَمَا أَنَّ <حرف>مَعَاْذَ اللّٰهِ</حرف> لَا تُجْعَلُ نَكِرَةً</مقطع>
  <مقطع رقم="٩">وَمِثْلُ ذٰلِكَ <قول رقم="٤">فَعَلَهُ رَأْيَ عَيْنِي</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٥">سَمْعَ أُذُنِي قَاْلَ ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١١">وَإِنْ قُلْتَ <حرف>سَمْعًا</حرف> جَاْزَ إِذَا لَمْ تَخْتَصَّ نَفْسَكَ</مقطع>
  <مقطع رقم="١٢">وَلٰكِنَّهُ كَقَوْلِكَ <قول رقم="٦">أَخَذْتُهُ عَنْهُ سَمَاْعًا</قول>
  </مقطع>
  <التحرير>
    <تشكيل نسخة="1" نسبة="100"/>
    <تقطيع نسخة="1"/>
    <أقوال نسخة="1" نسبة="100"/>
  </التحرير>
</باب>
