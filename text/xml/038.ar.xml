<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨٩"
     درنبورج="١-٧٥"
     البكاء="١-٢٤٩"
     هارون="١-١٧٥"
     يعقوب="١-٢٣٣"
     رقم="٣٨">
  <عنوان>
    <مقطع هوية='١٨٠٧٥'>هٰذَا بَابٌ جَرَى مَجْرَى الْفَاعِلِ الَّذِي يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع هوية='٣٠١٢٤'>في اللَّفْظِ لَا فِي الْمَعْنَى</مقطع>
  </عنوان>
  <مقطع هوية='٠٢٠٥٩'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <شاهدة هوية='٩٥٢٠٤'>
    <بيت>
      <مصراع>يَا سَارِقَ اللَّيْلَةِ أَهْلَ الدَّارِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٧٥٩١'>وَ تَقُوْلُ عَلَى هٰذَا الْحَدِّ</مقطع>
  <مقطع هوية='٦٨٣٧٢'>
    <قول هوية='٥٨٠٢٢'>سَرَقْتُ اللَّيْلَةَ أَهْلَ الدَّارِ</قول>
  </مقطع>
  <مقطع هوية='٦٢٣٤٦'>فَتُجْرِي <حرف>اللَّيْلَةَ</حرف> عَلَى الْفِعْلِ في سَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٨٧٥٠٩'>كَمَا قَالَ <قول هوية='٤٦٧٦٧'>صِيْدَ عَلَيْهِ يَوْمَاْنِ</قول>
  </مقطع>
  <مقطع هوية='٩٤٧٨٨'>وَ<قول هوية='٠٩٣٣٨'>وُلِدَ لَهُ سِتُّوْنَ عَاْمًا</قول>
  </مقطع>
  <مقطع هوية='٤٤٢٣١'>فَالَلَّفْظُ يَجْرِي عَلَى قَوْلِهِ</مقطع>
  <مقطع هوية='٢١٧٤٧'>
    <قول هوية='٧٧٢٥٨'>هٰذَا مُعْطِي زَيْدٍ دِرْهَمًا</قول>
  </مقطع>
  <مقطع هوية='٩٢٨٥٨'>وَالْمَعْنَى إِنَّمَا هُوَ <حرف>فِي اللَّيْلَةِ</حرف>
  </مقطع>
  <مقطع هوية='٤٣٣٨٣'>وَ<قول هوية='٤٧٩٦٢'>صِيْدَ عَلَيْهِ فِي الْيَوْمَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٣٨٤٩٦'>غَيْرَ أَنَّهُمْ أَوْقَعُوْا الْفِعْلَ عَلَيْهِ لِسَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٣٩٩٥٠'>وَكَذٰلِكَ لَوْ قُلْتَ <قول هوية='٤١٥١٩'>هٰذَا مُخْرِجُ الْيَوْمِ الدِّرْهَمَ</قول>
  </مقطع>
  <مقطع هوية='١٤٧٨٣'>وَ<قول هوية='١٦٤٨٢'>
  <تقدير>هٰذَا</تقدير> صَائِدُ الْيَوْمِ الْوَحْشَ</قول>
  </مقطع>
  <مقطع هوية='٠٤٥٤٥'>وَمِثْلُ مَا أُجْرِيَ مُجْرَى هٰذَا في سَعَةِ الْكَلَامِ وَالاسْتِخْفَافِ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='١٢٩٣٥'>
    <آية هوية='٣٧٠٠٦' سورة="٣٤" آية="٣٣">بَلْ مَكْرُ اللَّيْلِ وَالنَّهَارِ</آية>
  </مقطع>
  <مقطع هوية='٤٤٤١٦'>فَاللَّيْلُ وَالنَّهَارُ لَا يَمْكُرَاْنِ وَلَكِنَّ الْمَكْرَ فِيْهِمَا</مقطع>
  <مقطع هوية='٤٢٥٢٩'>فَإِنْ نَوَّنْتَ فَقُلْتَ</مقطع>
  <مقطع هوية='١٣١٦٥'>
    <قول هوية='٤٩٢٤١'>يَا سَاْرِقًا اللَّيْلَةَ أَهْلَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع هوية='٥٥٣١٠'>كَاْنَ حَدُّ الْكَلَامِ أَنْ يَكُوْنَ <حرف>أَهْلُ الدَّاْرِ</حرف> عَلَى <حرف>سَارِقٍ</حرف> مَنْصُوْبًا</مقطع>
  <مقطع هوية='٨٠٨٩٥'>وَيَكُوْنَ <حرف>اللَّيْلَةُ</حرف> ظَرْفًا</مقطع>
  <مقطع هوية='٩٠٩٨٨'>لِأَنَّ هٰذَا مَوْضِعُ انْفِصَاْلٍ</مقطع>
  <مقطع هوية='٥٩٠٦٨'>وَإِنْ شِئْتَ أَجْرَيْتَهُ عَلَى الْفِعْلِ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٢٨٢٧٨'>وَلَا يَجُوْزُ <قول هوية='٢٢٨٦٣'>يَا سَارِقَ اللَّيْلَةَ أَهْلِ الدَّارِ</قول> إِلَّا في شِعْرٍ</مقطع>
  <مقطع هوية='٢٢٦٨٦'>كَرَاهِيَةَ أَنْ يَفْصِلُوا بَيْنَ الْجَارِّ وَالْمَجْرُوْرِ</مقطع>
  <مقطع هوية='٦٢٤٩٨'>فَإِذَا كَاْنَ مُنَوَّنًا</مقطع>
  <مقطع هوية='٣١٥٠٩'>فَهُوَ بِمَنْزِلَةِ الْفِعْلِ النَّاْصِبِ</مقطع>
  <مقطع هوية='١٢٠٤٠'>تَكُوْنُ الْأَسْمَاءُ فِيْهِ مُنْفَصِلَةٌ</مقطع>
  <مقطع هوية='٥٢١١١'>قَالَ الشَّاعِرُ وَهُوَ الشَّمَّاْخُ</مقطع>
  <شاهدة هوية='٦٥٤٣٢'>
    <بيت>
      <مصراع>رُبَّ ابْنِ عَمٍّ لِسُلَيْمَى مُشْمَعِلّ</مصراع>
      <مصراع>طَبَّاْخِ سَاْعَاْتِ الْكَرَى زَاْدَ الْكَسِلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥١٤٣٣'>هٰذَا عَلَى <قول هوية='٨٤٦٢٥'>يَا سَاْرِقَ اللَّيْلَةَ أَهْلِ الدَّارِ</قول>
  </مقطع>
  <مقطع هوية='٨٦٦٢١'>وَقَالَ الْأَخْطَلُ</مقطع>
  <شاهدة هوية='٠٥٦٣٩'>
    <بيت>
      <مصراع>وَكَرَّاْرِ خَلْفِ الْمُجْحَرِينَ جَوَادَهُ</مصراع>
      <مصراع>إِذَا لَمْ يُحَاْمِ دُوْنَ أُنْثَى حَلِيْلُها</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٢٨٧٩'>فَإِنْ قُلْتَ <حرف>كَرَّارٍ</حرف> وَ<حرف>طَبّاخٍ</حرف> صَارَ بِمَنْزِلَةِ <حرف>طَبَخْتُ</حرف> وَ<حرف>كَرَّرْتُ</حرف>
  </مقطع>
  <مقطع هوية='٥٣٥٦٣'>تُجْرِيْهَا مَجْرَى الـ<حرف>سَّارِقِ</حرف> حِيْنَ نَوَّنْتَ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٤٣٢٤٧'>وَقَالَ رَجُلٌ مِنْ بَنِي عَاْمِرٍ</مقطع>
  <شاهدة هوية='٣٨٧٦٠'>
    <بيت>
      <مصراع>وَيَوْمٍ شَهِدْنَاْهُ سُلَيْمَا وَعَاْمِرًا</مصراع>
      <مصراع>قَلِيْلٍ سِوَى الطَّعْنِ النِّهَاْلِ نَوَافِلُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٨٧٥٥'>وَكَمَا قَالَ <قول هوية='١٠٩٢٢'>ثَمَاْنِيَ حِجَجٍ حَجَجْتُهُنَّ بَيْتَ اللّٰهِ</قول>
  </مقطع>
  <مقطع هوية='٢١٨٨٩'>وَمِمَّا جَاْءَ في الشِّعْرِ قَدْ فُصِلَ بَيْنَهُ وَبَيْنَ الْمَجْرُوْرِ</مقطع>
  <مقطع هوية='٧٧٧٧٤'>قَوْلُ عَمْرِو بْنِ قَمِيْئَةَ</مقطع>
  <شاهدة هوية='٤٥٢١٢'>
    <بيت>
      <مصراع>لَّمَّا رَأَتْ سَاْتِيْدَمَا اسْتَعْبَرَتْ</مصراع>
      <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٧٧٥٦'>وَقَالَ أَبُو حَيَّةَ النُّمَيْرِيُّ</مقطع>
  <شاهدة هوية='١٧٦٧٥'>
    <بيت>
      <مصراع>كَمَا خُطَّ الْكِتَابُ بِكَفِّ يَوْمًا</مصراع>
      <مصراع>يَهُوْدِيٍّ يُقَارِبُ أَوْ يَزِيْلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٨٨٥٧'>وَهٰذَا لَا يَكُوْنُ فِيْهِ إِلَّا هٰذَا</مقطع>
  <مقطع هوية='٠٩١٩٠'>لِأَنَّهُ لَيْسَ في مَعْنَى فِعْلٍ</مقطع>
  <مقطع هوية='٢٦٢٣٠'>وَلَا اسْمِ الْفَاعِلِ الَّذِي جَرَى مَجْرَى الْفِعْلِ</مقطع>
  <مقطع هوية='٩١١٠٦'>وَمِمَّا جَاءَ مَفْصُوْلًا بَيْنَهُ وَبَيْنَ الْمَجْرُوْرِ قَوْلُ الْأَعْشَى</مقطع>
  <شاهدة هوية='٩٦٨٥٦'>
    <بيت>
      <مصراع>وَلَا نُقَاْتِلُ بِالعِصِـ</مصراع>
      <مصراع>ـيِّ وَلَا نُرَاْمِي بِالْحِجَارَهْ</مصراع>
    </بيت>
    <بيت>
      <مصراع>إِلَّا عُلَالَةَ أَوْ بُدَا</مصراع>
      <مصراع>هَةَ قَاْرِحٍ نَهْدِ الْجُزَاْرَهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤١٧٦١'>وَقَاْلَ ذُو الرُّمَّةِ</مقطع>
  <شاهدة هوية='٦٧٠٥١'>
    <بيت>
      <مصراع>كَأَنَّ أَصْوَاتَ مِنْ إِيْغَالِهِنَّ بِنَا</مصراع>
      <مصراع>أَوَاْخِرِ الْمَيْسِ أَصْوَاْتُ الْفَرَاْرِيْجِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٦٥٧١'>فَهٰذَا قَبِيْحٌ</مقطع>
  <مقطع هوية='٩٠٨٢٨'>وَيَجُوْزُ في الشِّعْرِ عَلَى هٰذَا</مقطع>
  <مقطع هوية='٧٥٨٧٣'>
    <قول هوية='٨٣٤٣٤'>مَرَرْتُ بِخَيْرِ وَأَفَضَلِ مَنْ ثَمَّ</قول>
  </مقطع>
  <مقطع هوية='١٦١٩٧'>وَقَاْلَتْ دُرْنَا بِنْتُ عَبْعَبَةَ مِنْ بَنِي قَيْسِ بْنِ ثَعْلَبَةَ</مقطع>
  <شاهدة هوية='٧٥٣٩٥'>
    <بيت>
      <مصراع>هُمَا أَخَوَا في الْحَرْبِ مَنْ لَا أَخَا لَهُ</مصراع>
      <مصراع>إِذَا خَاْفَ يَوْمًا نَبْوَةً فَدَعَاْهُمَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٥٣٨٦'>وَقَاْلَ الْفَرَزْدَقُ</مقطع>
  <شاهدة هوية='٦٤٢٨٤'>
    <بيت>
      <مصراع>يَا مَنْ رَأَى عَاْرِضًا أُسَرُّ بِهِ</مصراع>
      <مصراع>بَيْنَ ذِرَاعَيْ وَجَبْهَةِ الْأَسَدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٧٦٠١'>وَأَمَّا قَوْلُهُ عَزَّ وَجَلَّ <آية هوية='٩٨١٨٥' سورة="٤" آية="١٥٥">فَبِمَا نَقْضِهِمْ مِّيْثَاْقَهُمْ</آية>
  </مقطع>
  <مقطع هوية='٤٣٩٥٩'>فَإِنَّمَا جَاءَ لِأَنَّهُ لَيْسَ لِـ<حرف>مَا</حرف> مَعْنًى سِوَى مَا كَاْنَ قَبْلَ أَنْ تَجِيءَ إِلَّا التَّوْكِيدُ</مقطع>
  <مقطع هوية='١١٨٧٢'>فَمِنْ ثَمَّ جَازَ ذٰلِكَ إِذْ لَمْ تُرِدْ بِهِ أَكْثَرَ مِنْ هٰذَا</مقطع>
  <مقطع هوية='٢٧٨٢٣'>وَكَانَا حَرْفَيْنِ أَحَدُهُمَا في الْآخَرِ عَامِلٌ</مقطع>
  <مقطع هوية='٢٣١٩٧'>وَلَوْ كَانَ اسْمًا أَوْ ظَرْفًا أَوْ فِعْلًا لَمْ يَجُزْ</مقطع>
  <مقطع هوية='٦١٩٣٩'>وَأَمَّا قَوْلُهُ <قول هوية='١٥٩٠٨'>أُدْخِلَ فُوْهُ الْحَجَرَ</قول>
  </مقطع>
  <مقطع هوية='٤٥٣٤٢'>فَهٰذَا جَرَى عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٨٨٧٩٠'>وَالْجَيِّدُ <قول هوية='١٣٩٢٢'>أُدْخِلَ فَاْهُ الْحَجَرُ</قول>
  </مقطع>
  <مقطع هوية='٢٧٣٨٥'>كَمَا قَالَ <قول هوية='٠٧٥٩٨'>أَدْخَلْتُ في رَأْسِي الْقَلَنْسُوَةَ</قول>
  </مقطع>
  <مقطع هوية='٧٩٧٥٦'>وَالْجَيِّدُ <قول هوية='٢٩٧٢١'>أَدْخَلْتُ في الْقَلَنْسُوَةِ رَأْسِي</قول>
  </مقطع>
  <مقطع هوية='٨١٦٩٥'>وَلَيْسَ مِثْلَ <حرف>الْيَوْمِ</حرف> وَ<حرف>اللَّيْلَةِ</حرف> لِأَنَّهُمَا ظَرْفَاْنِ</مقطع>
  <مقطع هوية='٥١٣٠٤'>فَهُوَ مُخَاْلِفٌ لَهُ في هٰذَا مُوَافِقٌ لَهُ في السَّعَةِ</مقطع>
  <مقطع هوية='٥٣١٦٣'>قَاْلَ الشَّاعِرُ</مقطع>
  <شاهدة هوية='٩٣٢٩٣'>
    <بيت>
      <مصراع>تَرَى الثَّوْرَ فِيْهَا مُدْخِلَ الظِّلِّ رَأْسَهُ</مصراع>
      <مصراع>وَسَاْئِرُهُ بَاْدٍ إِلَى الشَّمْسِ أَجْمَعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٥٥١٧'>فَوَجَّهَ الْكَلَامَ فِيْهِ هٰذَا كَرَاْهِيَةَ الِانْفِصَاْلِ</مقطع>
  <مقطع هوية='٠٢٨٨٣'>وَإِذَا لَمْ يَكُنْ في الْجَرِّ</مقطع>
  <مقطع هوية='٥٨٧٣٦'>فَحَدُّ الْكَلَامِ أَنْ يَكُوْنَ النَّاْصِبُ مَبْدُوْءًا بِهِ</مقطع>
