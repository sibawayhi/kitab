<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨٩"
     درنبورج="١-٧٥"
     البكاء="١-٢٤٩"
     هارون="١-١٧٥"
     يعقوب="١-٢٣٣"
     رقم="٣٨">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ جَرَى مَجْرَى الْفَاعِلِ الَّذِي يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع رقم="٢">في اللَّفْظِ لَا فِي الْمَعْنَى</مقطع>
  </عنوان>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ</مقطع>
  <شاهدة مقطع="٤" رقم="١">
    <بيت>
      <مصراع>يَا سَارِقَ اللَّيْلَةِ أَهْلَ الدَّارِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥">وَ تَقُوْلُ عَلَى هٰذَا الْحَدِّ</مقطع>
  <مقطع رقم="٦">
    <قول رقم="١" مثال="١">سَرَقْتُ اللَّيْلَةَ أَهْلَ الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٧">فَتُجْرِي <حرف>اللَّيْلَةَ</حرف> عَلَى الْفِعْلِ في سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٨">كَمَا قَالَ <قول رقم="٢">صِيْدَ عَلَيْهِ يَوْمَاْنِ</قول>
  </مقطع>
  <مقطع رقم="٩">وَ<قول رقم="٣" مثال="١">وُلِدَ لَهُ سِتُّوْنَ عَاْمًا</قول>
  </مقطع>
  <مقطع رقم="١٠">فَالَلَّفْظُ يَجْرِي عَلَى قَوْلِهِ</مقطع>
  <مقطع رقم="١١">
    <قول رقم="٤">هٰذَا مُعْطِي زَيْدٍ دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="١٢">وَالْمَعْنَى إِنَّمَا هُوَ <حرف>فِي اللَّيْلَةِ</حرف>
  </مقطع>
  <مقطع رقم="١٣">وَ<قول رقم="٥">صِيْدَ عَلَيْهِ فِي الْيَوْمَيْنِ</قول>
  </مقطع>
  <مقطع رقم="١٤">غَيْرَ أَنَّهُمْ أَوْقَعُوْا الْفِعْلَ عَلَيْهِ لِسَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="١٥">وَكَذٰلِكَ لَوْ قُلْتَ <قول رقم="٦">هٰذَا مُخْرِجُ الْيَوْمِ الدِّرْهَمَ</قول>
  </مقطع>
  <مقطع رقم="١٦">وَ<قول رقم="٧">
  <تقدير>هٰذَا</تقدير> صَائِدُ الْيَوْمِ الْوَحْشَ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَمِثْلُ مَا أُجْرِيَ مُجْرَى هٰذَا في سَعَةِ الْكَلَامِ وَالاسْتِخْفَافِ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="١٨">
    <آية سورة="٣٤" آية="٣٣">بَلْ مَكْرُ اللَّيْلِ وَالنَّهَارِ</آية>
  </مقطع>
  <مقطع رقم="١٩">فَاللَّيْلُ وَالنَّهَارُ لَا يَمْكُرَاْنِ وَلَكِنَّ الْمَكْرَ فِيْهِمَا</مقطع>
  <مقطع رقم="٢٠">فَإِنْ نَوَّنْتَ فَقُلْتَ</مقطع>
  <مقطع رقم="٢١">
    <قول رقم="٨" مثال="١">يَا سَاْرِقًا اللَّيْلَةَ أَهْلَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٢٢">كَاْنَ حَدُّ الْكَلَامِ أَنْ يَكُوْنَ <حرف>أَهْلُ الدَّاْرِ</حرف> عَلَى <حرف>سَارِقٍ</حرف> مَنْصُوْبًا</مقطع>
  <مقطع رقم="٢٣">وَيَكُوْنَ <حرف>اللَّيْلَةُ</حرف> ظَرْفًا</مقطع>
  <مقطع رقم="٢٤">لِأَنَّ هٰذَا مَوْضِعُ انْفِصَاْلٍ</مقطع>
  <مقطع رقم="٢٥">وَإِنْ شِئْتَ أَجْرَيْتَهُ عَلَى الْفِعْلِ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٢٦">وَلَا يَجُوْزُ <قول رقم="٩">يَا سَارِقَ اللَّيْلَةَ أَهْلِ الدَّارِ</قول> إِلَّا في شِعْرٍ</مقطع>
  <مقطع رقم="٢٧">كَرَاهِيَةَ أَنْ يَفْصِلُوا بَيْنَ الْجَارِّ وَالْمَجْرُوْرِ</مقطع>
  <مقطع رقم="٢٨">فَإِذَا كَاْنَ مُنَوَّنًا</مقطع>
  <مقطع>فَهُوَ بِمَنْزِلَةِ الْفِعْلِ النَّاْصِبِ</مقطع>
  <مقطع>تَكُوْنُ الْأَسْمَاءُ فِيْهِ مُنْفَصِلَةٌ</مقطع>
  <مقطع رقم="٢٩">قَالَ الشَّاعِرُ وَهُوَ الشَّمَّاْخُ</مقطع>
  <شاهدة مقطع="٣٠" رقم="٢">
    <بيت>
      <مصراع>رُبَّ ابْنِ عَمٍّ لِسُلَيْمَى مُشْمَعِلّ</مصراع>
      <مصراع>طَبَّاْخِ سَاْعَاْتِ الْكَرَى زَاْدَ الْكَسِلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣١">هٰذَا عَلَى <قول رقم="١٠">يَا سَاْرِقَ اللَّيْلَةَ أَهْلِ الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٣٢">وَقَالَ الْأَخْطَلُ</مقطع>
  <شاهدة مقطع="٣٣" رقم="٣">
    <بيت>
      <مصراع>وَكَرَّاْرِ خَلْفِ الْمُجْحَرِينَ جَوَادَهُ</مصراع>
      <مصراع>إِذَا لَمْ يُحَاْمِ دُوْنَ أُنْثَى حَلِيْلُها</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٤">فَإِنْ قُلْتَ <حرف>كَرَّارٍ</حرف> وَ<حرف>طَبّاخٍ</حرف> صَارَ بِمَنْزِلَةِ <حرف>طَبَخْتُ</حرف> وَ<حرف>كَرَّرْتُ</حرف>
  </مقطع>
  <مقطع رقم="٣٥">تُجْرِيْهَا مَجْرَى الـ<حرف>سَّارِقِ</حرف> حِيْنَ نَوَّنْتَ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٣٦">وَقَالَ رَجُلٌ مِنْ بَنِي عَاْمِرٍ</مقطع>
  <شاهدة مقطع="٣٧" رقم="٤">
    <بيت>
      <مصراع>وَيَوْمٍ شَهِدْنَاْهُ سُلَيْمَا وَعَاْمِرًا</مصراع>
      <مصراع>قَلِيْلٍ سِوَى الطَّعْنِ النِّهَاْلِ نَوَافِلُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٨">وَكَمَا قَالَ <قول رقم="١١">ثَمَاْنِيَ حِجَجٍ حَجَجْتُهُنَّ بَيْتَ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٣٩">وَمِمَّا جَاْءَ في الشِّعْرِ قَدْ فُصِلَ بَيْنَهُ وَبَيْنَ الْمَجْرُوْرِ</مقطع>
  <مقطع رقم="٤٠">قَوْلُ عَمْرِو بْنِ قَمِيْئَةَ</مقطع>
  <شاهدة مقطع="٤١" رقم="٥">
    <بيت>
      <مصراع>لَّمَّا رَأَتْ سَاْتِيْدَمَا اسْتَعْبَرَتْ</مصراع>
      <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٢">وَقَالَ أَبُو حَيَّةَ النُّمَيْرِيُّ</مقطع>
  <شاهدة مقطع="٤٣" رقم="٦">
    <بيت>
      <مصراع>كَمَا خُطَّ الْكِتَابُ بِكَفِّ يَوْمًا</مصراع>
      <مصراع>يَهُوْدِيٍّ يُقَارِبُ أَوْ يَزِيْلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٤">وَهٰذَا لَا يَكُوْنُ فِيْهِ إِلَّا هٰذَا</مقطع>
  <مقطع رقم="٤٥">لِأَنَّهُ لَيْسَ في مَعْنَى فِعْلٍ</مقطع>
  <مقطع رقم="٤٦">وَلَا اسْمِ الْفَاعِلِ الَّذِي جَرَى مَجْرَى الْفِعْلِ</مقطع>
  <مقطع رقم="٤٧">وَمِمَّا جَاءَ مَفْصُوْلًا بَيْنَهُ وَبَيْنَ الْمَجْرُوْرِ قَوْلُ الْأَعْشَى</مقطع>
  <شاهدة مقطع="٤٨" رقم="٧">
    <بيت>
      <مصراع>وَلَا نُقَاْتِلُ بِالعِصِـ</مصراع>
      <مصراع>ـيِّ وَلَا نُرَاْمِي بِالْحِجَارَهْ</مصراع>
    </بيت>
    <بيت>
      <مصراع>إِلَّا عُلَالَةَ أَوْ بُدَا</مصراع>
      <مصراع>هَةَ قَاْرِحٍ نَهْدِ الْجُزَاْرَهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٩">وَقَاْلَ ذُو الرُّمَّةِ</مقطع>
  <شاهدة مقطع="٥٠" رقم="٨">
    <بيت>
      <مصراع>كَأَنَّ أَصْوَاتَ مِنْ إِيْغَالِهِنَّ بِنَا</مصراع>
      <مصراع>أَوَاْخِرِ الْمَيْسِ أَصْوَاْتُ الْفَرَاْرِيْجِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥١">فَهٰذَا قَبِيْحٌ</مقطع>
  <مقطع رقم="٥٢">وَيَجُوْزُ في الشِّعْرِ عَلَى هٰذَا</مقطع>
  <مقطع رقم="٥٣">
    <قول رقم="١٢">مَرَرْتُ بِخَيْرِ وَأَفَضَلِ مَنْ ثَمَّ</قول>
  </مقطع>
  <مقطع رقم="٥٤">وَقَاْلَتْ دُرْنَا بِنْتُ عَبْعَبَةَ مِنْ بَنِي قَيْسِ بْنِ ثَعْلَبَةَ</مقطع>
  <شاهدة مقطع="٥٥" رقم="٩">
    <بيت>
      <مصراع>هُمَا أَخَوَا في الْحَرْبِ مَنْ لَا أَخَا لَهُ</مصراع>
      <مصراع>إِذَا خَاْفَ يَوْمًا نَبْوَةً فَدَعَاْهُمَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٦">وَقَاْلَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="٥٧" رقم="١٠">
    <بيت>
      <مصراع>يَا مَنْ رَأَى عَاْرِضًا أُسَرُّ بِهِ</مصراع>
      <مصراع>بَيْنَ ذِرَاعَيْ وَجَبْهَةِ الْأَسَدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٨">وَأَمَّا قَوْلُهُ عَزَّ وَجَلَّ <آية سورة="٤" آية="١٥٥">فَبِمَا نَقْضِهِمْ مِّيْثَاْقَهُمْ</آية>
  </مقطع>
  <مقطع رقم="٥٩">فَإِنَّمَا جَاءَ لِأَنَّهُ لَيْسَ لِـ<حرف>مَا</حرف> مَعْنًى سِوَى مَا كَاْنَ قَبْلَ أَنْ تَجِيءَ إِلَّا التَّوْكِيدُ</مقطع>
  <مقطع رقم="٦١">فَمِنْ ثَمَّ جَازَ ذٰلِكَ إِذْ لَمْ تُرِدْ بِهِ أَكْثَرَ مِنْ هٰذَا</مقطع>
  <مقطع رقم="٦٢">وَكَانَا حَرْفَيْنِ أَحَدُهُمَا في الْآخَرِ عَامِلٌ</مقطع>
  <مقطع رقم="٦٣">وَلَوْ كَانَ اسْمًا أَوْ ظَرْفًا أَوْ فِعْلًا لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٦٤">وَأَمَّا قَوْلُهُ <قول رقم="١٣">أُدْخِلَ فُوْهُ الْحَجَرَ</قول>
  </مقطع>
  <مقطع رقم="٦٥">فَهٰذَا جَرَى عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٦٦">وَالْجَيِّدُ <قول رقم="١٤">أُدْخِلَ فَاْهُ الْحَجَرُ</قول>
  </مقطع>
  <مقطع رقم="٦٧">كَمَا قَالَ <قول رقم="١٥">أَدْخَلْتُ في رَأْسِي الْقَلَنْسُوَةَ</قول>
  </مقطع>
  <مقطع رقم="٦٨">وَالْجَيِّدُ <قول رقم="١٦">أَدْخَلْتُ في الْقَلَنْسُوَةِ رَأْسِي</قول>
  </مقطع>
  <مقطع رقم="٦٩">وَلَيْسَ مِثْلَ <حرف>الْيَوْمِ</حرف> وَ<حرف>اللَّيْلَةِ</حرف> لِأَنَّهُمَا ظَرْفَاْنِ</مقطع>
  <مقطع رقم="٧٠">فَهُوَ مُخَاْلِفٌ لَهُ في هٰذَا مُوَافِقٌ لَهُ في السَّعَةِ</مقطع>
  <مقطع رقم="٧١">قَاْلَ الشَّاعِرُ</مقطع>
  <شاهدة مقطع="٧٢" رقم="١١">
    <بيت>
      <مصراع>تَرَى الثَّوْرَ فِيْهَا مُدْخِلَ الظِّلِّ رَأْسَهُ</مصراع>
      <مصراع>وَسَاْئِرُهُ بَاْدٍ إِلَى الشَّمْسِ أَجْمَعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٣">فَوَجَّهَ الْكَلَامَ فِيْهِ هٰذَا كَرَاْهِيَةَ الِانْفِصَاْلِ</مقطع>
  <مقطع رقم="٧٤">وَإِذَا لَمْ يَكُنْ في الْجَرِّ</مقطع>
  <مقطع رقم="٧٥">فَحَدُّ الْكَلَامِ أَنْ يَكُوْنَ النَّاْصِبُ مَبْدُوْءًا بِهِ</مقطع>
