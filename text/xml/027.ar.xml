<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤٧"
     درنبورج="١-٣٦"
     البكاء="١-١٦١"
     هارون="١-٩١"
     يعقوب="١-١٤٦"
     رقم="٢٧">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبٌ يُحْمَلُ فِيْهِ الِاسْمُ عَلَى اسْمٍ</مقطع>
    <مقطع رقم="٢">بُنِيَ عَلَيْهِ الْفِعْلُ مَرَّةً</مقطع>
    <مقطع رقم="٣">وَيُحْمَلُ مَرَّةً أُخْرَى عَلَى اسْمٍ مَبْنِيٍّ عَلَى الْفِعْلِ</مقطع>
  </عنوان>
  <مقطع رقم="٤">أَيَّ ذٰلِكَ فَعَلْتَ جَاْزَ</مقطع>
  <مقطع رقم="٥">فَإِنْ حَمَلْتَهُ عَلَى الاسْمِ الَّذِي بُنِيَ عَلَيْهِ الْفِعْلُ</مقطع>
  <مقطع رقم="٦">كَاْنَ بِمَنْزِلَتِهِ إِذَا بَنَيْتَ عَلَيْهِ الْفِعْلَ مُبْتَدَأً</مقطع>
  <مقطع رقم="٧">يَجُوْزُ فِيْهِ مَا يَجُوْزُ إِذَا قُلْتَ <قول رقم="١">زَيْدٌ لَقِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٨">وَإِنْ حَمَلْتَهُ عَلَى الَّذِي بُنِِيَ عَلَى الْفِعْلِ</مقطع>
  <مقطع رقم="٩">اخْتِيْرَ فِيْهِ النَّصْبُ</مقطع>
  <مقطع رقم="١٠">كَمَا اخْتِيْرَ فِيْمَا قَبْلَهُ</مقطع>
  <مقطع رقم="١١">وَجَاْزَ فِيْهِ مَا جَاْزَ في الَّذِي قَبْلَهُ</مقطع>
  <مقطع رقم="١٢">وَذٰلِكَ قَوْلُكَ <قول رقم="٢">عَمْرٌو لَقِيْتُهُ وَزَيْدٌ كَلَّمْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٣">إِن حَمَلْتَ الْكَلَاْمَ عَلَى الْأَوَّلِ</مقطع>
  <مقطع رقم="١٤">وَإِنْ حَمَلْتَهُ عَلَى الْآخِرِ قُلْتَ</مقطع>
  <مقطع><قول رقم="٣">عَمْرٌو لَقِيْتُهُ وَزَيْدًا كَلَّمْتُهُ <!-- اللهُ واللهِ --></قول></مقطع>
  <مقطع رقم="١٥">وَمِثْلُ ذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع><قول رقم="٤">زَيْدٌ لَقِيْتُ أَبَاْهُ وَعَمْرًا مَرَرْتُ بِهِ</قول></مقطع>
  <مقطع رقم="١٦">إِنْ حَمَلْتَهُ عَلَى <حرف>الْأَبِ</حرف></مقطع>
  <مقطع رقم="١٧">وَإِنْ حَمَلْتَهُ عَلَى الْأَوَّلِ رَفَعْتَ</مقطع>
  <مقطع رقم="١٨">وَالدَّلِيْلُ عَلَى أَنَّ الرَّفْعَ وَالنَّصْبَ جَاْئِزٌ كِلَاْهُمَا أَنَّكَ تَقُوْلُ</مقطع>
  <مقطع رقم="١٩"><قول رقم="٥">زَيْدٌ لَقِيْتُ أَبَاْهُ وَعَمْرًا</قول></مقطع>
  <مقطع رقم="٢٠">إِنْ أَرَدْتَ أَنَّكَ لَقِيْتَ عَمْرًا وَالْأَبَ</مقطع>
  <مقطع رقم="٢١">وَإِنْ زَعَمْتَ أَنَّكَ لَقِيْتَ أَبَا عَمْرٍو وَلَمْ تَلْقَهُ رَفَعْتَ</مقطع>
  <مقطع رقم="٢٢">وَمِثْلُ ذٰلِكَ <قول رقم="٦">زَيْدٌ لَقِيْتُهُ وَعَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="٢٣">إِنْ شِئْتَ رَفَعْتَ وَإِنْ شِئْتَ قُلْتَ <قول رقم="٧">زَيْدٌ لَقِيْتُهُ وَعَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٢٤">وَتَقُوْلُ أَيْضًا <قول رقم="٨">زَيْدٌ أَلْقَاْهُ وَعَمْرًا</قول> وَ<حرف>عَمْرٌو</حرف></مقطع>
  <مقطع رقم="٢٥">فَهٰذَا يُقَوِّي أَنَّكَ بِالْخِيَاْرِ في الْوَجْهَيْنِ</مقطع>
  <مقطع رقم="٢٦">وَتَقُوْلُ <قول رقم="٩">زَيْدٌ ضَرَبَنِي وَعَمْرٌو مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٢٧">إِنْ حَمَلْتَهُ عَلَى زَيْدٍ فَهُوَ رَفْعٌ [مَرْفُوْعٌ] لِأَنَّهُ مُبْتَدَأٌ</مقطع>
  <مقطع رقم="٢٨">وَالْفِعْلُ مَبْنِيٌّ عَلَيْهِ</مقطع>
  <مقطع رقم="٢٩">وَإِنْ حَمَلْتَهُ عَلَى الْمَنْصُوْبِ قُلْتَ <قول رقم="١٠">زَيْدٌ ضَرَبَنِي وَعَمْرًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٣٠">لِأَنَّ هٰذَا الْإِضْمَاْرَ بِمَنْزِلَةِ الْهَاْءِ في <حرف>ضَرَبْتُهُ</حرف>
  </مقطع>
  <مقطع رقم="٣١">فَإِنْ قُلْتَ <قول رقم="١١">ضَرَبَنِي زَيْدٌ وَعَمْرًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٣٢">فَالْوَجْهُ النَّصْبُ لِأَنَّ <حرف>زَيْدًا</حرف> لَيْسَ مَبْنِيًّا عَلَيْهِ الْفِعْلُ مُبْتَدَأً</مقطع>
  <مقطع رقم="٣٣">وَإِنَّمَا هُوَ هٰهُنَا بِمَنْزِلَةِ التَّاْءِ فَىِ <حرف>ضَرَبْتُهُ</حرف>
  </مقطع>
  <مقطع رقم="٣٤">وَذَكَرْتَ الْمَفْعُوْلَ الَّذِي يَجُوْزُ فِيْهِ النَّصْبُ في الِابْتِدَاْءِ</مقطع>
  <مقطع رقم="٣٥">فَحَمَلْتَهُ عَلَى مِثْلِ مَا حَمَلْتَ عَلَيْهِ مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٣٦">وَكَاْنَ الْوَجْهَ إِذْ كَاْنَ ذٰلِكَ يَكُوْنُ فِيْهِ في الِابْتِدَاْءِ</مقطع>

  <مقطع رقم="٣٧">وَإِذَا قُلْتَ <قول رقم="١٢">مَرَرْتُ بِزَيْدٍ وَعَمْرًا مَرَرْتُ بِهِ</قول></مقطع>
  <مقطع رقم="٣٨">نَصَبْتَ وَكَاْنَ الْوَجْهَ</مقطع>
  <مقطع رقم="٣٩">لِأَنَّكَ بَدَأْتَ بِالْفِعْلِ وَلَمْ تَبْتَدِئِ اسْمًا تَبْنِيْهِ عَلَيْهِ</مقطع>
  <مقطع رقم="٤٠">وَلٰكِنَّكَ قُلْتَ <حرف>فَعَلْتُ</حرف> ثُمَّ بَنَيْتَ عَلَيْهِ الْمَفْعُوْلَ</مقطع>
  <مقطع رقم="٤١">وَإِنْ كَاْن الْفِعْلُ لَا يَصِلُ إِلَيْهِ إِلَّا بِحَرْفِ الْإِضَاْفَةِ</مقطع>
  <مقطع رقم="٤٢">فَكَأَنَّكَ قُلْتَ <قول رقم="١٣">مَرَرْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤٣">وَلَوْلَا أَنَّهُ كَذٰلِكَ مَا كَاْنَ وَجْهُ الْكَلَاْمِ <قول رقم="١٤">زَيْدًا مَرَرْتَ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٤٤">وَ<قول رقم="١٥">قُمْتُ وَعَمْرًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٤٥">وَنَحْوُ ذٰلِكَ قَوْلُكَ <قول رقم="١٦">خَشَّنْتُ بِصَدْرِهِ</قول>
  </مقطع>
  <!--
      lane:
      خَشُنَ: be/become rough, harsh, coarse
      خَشُنَ عليه صَدْرُهُ: He was, or became, angry with him
      خَشَّنَ صَدْرَهُ: He exasperated him, made him to be afflicted
      with wrath, or rage
      adj: خَشِنٌ
      from which we could form a sifa mushabbaha:
      هو خَشِنُ الصَّدْرِ عليه
  -->
  <مقطع رقم="٤٦">فَالصَّدْرُ في مَوْضِعِ نَصْبٍ وَقَدْ عَمِلَتْ الْبَاءُ</مقطع>
  <مقطع رقم="٤٧">وَمِثْلُهُ <آية>قُلْ كَفَى بِاللّٰهِ شَهِيْدًا بَيْنِي وَبَيْنَكُمْ</آية>
  </مقطع>
  <مقطع رقم="٤٨">إِنَّمَا هِىَ <حرف>كَفَى اللّٰهُ</حرف>
  </مقطع>
  <مقطع رقم="٤٩">وَلٰكِنَّكَ لَمَّا أَدْخَلْتَ الْبَاءَ عَمِلَتْ</مقطع>
  <مقطع رقم="٥٠">وَالْمَوْضِعُ مَوْضِعُ نَصْبٍ وَالْمَعْنَى مَعْنَى النَّصْبِ</مقطع>
  <مقطع رقم="٥١">وَهٰذَا قَوْلُ الْخَلِيْلِ رَحِمَهُ اللّٰهُ</مقطع>
  <مقطع رقم="٥٢">وَإِذَا قُلْتَ <قول رقم="١٧">عَبْدُ اللّٰهِ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٥٣">أَجْرَيْتَ الْاسْمَ بَعْدَهُ مُجْرَاهُ بَعْدَ <قول رقم="١٨">زَيْدٌ لَقِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٥٤">لِأَنَّ <قول رقم="١٩">مَرَرْتُ بِعَبْدِ اللّٰهِ</قول> [يُجْرَى] تُجْرِيْهِ مُجْرَى <قول رقم="٢٠">لَقِيْتُ عَبْدَ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٥٥">وَتَقُوْلُ <قول رقم="٢١">هٰذَا ضَارِبٌ عَبْدَ اللّٰهِ وَزَيْدًا يَمُرُّ بِهِ</قول> إِنْ حَمَلْتَهُ عَلَى الْمَنْصُوْبِ</مقطع>
  <مقطع رقم="٥٦">فَإِنْ حَمَلْتَهُ عَلَى الْمُبْتَدَإِ وَهُوَ <حرف>هٰذًا</حرف> رَفَعْتَ</مقطع>
  <مقطع رقم="٥٧">فَإِنْ أَلْقَيْتَ النُّوْنَ وَأَنْتَ تُرِيْدُ مَعْنَاهَا فَهُوَ بِتِلْكَ الْمَنْزِلَةِ</مقطع>
  <مقطع رقم="٥٨">وَذٰلِكَ قَوْلُكَ <قول رقم="٢٢">هٰذَا ضَارِبُ زَيْدٍ غَدًا وَعَمْرًا سَيَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٥٩">وَلَوْلَا أَنَّهُ كَذٰلِكَ لِمَا قُلْتَ <قول رقم="٢٣">أَزْيَدًا أَنْتَ ضَارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٦٠">وَ<قول رقم="٢٤">مَا زَيْدًا أَنَا ضَارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٦١">فَهٰذَا نَحْوُ <قول رقم="٢٥">مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٦٢">لأَنَ مَعْنَاهُ مُنَوَّنًا وَغَيْرَ مُنَوَّنٍ سَوَاءٌ</مقطع>
  <مقطع رقم="٦٣">كَمَا أَنَّكَ إِذَا قُلْتَ <قول رقم="٢٦">مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٦٤">فَكَأَنَّكَ قُلْتَ <قول رقم="٢٧">مَرَرْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٦٥">وَتَقُوْلُ <قول رقم="٢٨">ضَرَبْتُ زَيْدًا وَعَمْرًا أَنَا ضَارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٦٦">يُخْتَارُ هٰذَا كَمَا يُخْتَارُ في الِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٦٧">وَمِمَّا يُخْتَارُ فِيْهِ النَّصْبُ قَوْلُ الرَّجُلِ <قول رقم="٢٩">مَنْ رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٦٨">وَ<قول رقم="٣٠">أَيَّهُمْ رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٦٩">فَتَقُوْلُ <قول رقم="٣١">زَيْدًا رَأَيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٧٠">تُنْزِلُهُ مَنْزِلَةَ قَوْلِكَ <قول رقم="٣٢">كَلَّمْتُ عَمْرًا وَزَيْدًا لَقِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٧١">أَلَا تَرَى أَنَّ الرَّجُلَ يَقُوْلُ <قول رقم="٣٣">مَنْ رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٧٢">فَتَقُوْلُ <قول رقم="٣٤">زَيْدًا</قول> عَلَى كَلَاْمِهِ</مقطع>
  <مقطع رقم="٧٣">فَيَصِيْرُ هٰذَا بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٣٥">رَأَيْتُ زَيْدًا وَعَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٧٤">يُجْرَى عَلَى الْفِعْلِ كَمَا يُجْرَى الْآخِرُ عَلَى الْأَوَّلِ بِالْوَاوِ</مقطع>
  <مقطع رقم="٧٥">وَمِثْلُ ذٰلِكَ قَوْلُكَ <قول رقم="٣٦">أَرَأَيْتَ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٧٦">فَتَقُوْلُ <قول رقم="٣٧">لَا وَلٰكِنْ عَمْرًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٧٧">أَلَا تَرَى أَنَّهُ لَوْ قَالَ <قول رقم="٣٨">لَا وَلٰكِنْ عَمْرًا</قول> لَجَرَى عَلَى <قول رقم="٣٩">أَرَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٧٨">فَإِنْ قَالَ <قول رقم="٤٠">مَنْ رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="٧٩">وَ<قول رقم="٤١">أَيُّهُمْ رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="٨٠">فَأَجَبْتَهُ قُلْتَ <قول رقم="٤٢">زَيْدٌ رَأَيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٨١">إِلَّا في قَوْلِ مَنْ قَالَ <قول رقم="٤٣">زَيْدًا رَأَيْتُهُ في الِابْتِدَاءِ</قول>
  </مقطع>
  <مقطع رقم="٨٢">لِأَنَّ هٰذَا كَقَوْلِكَ <قول رقم="٤٤">أَيُّهُمْ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٨٣">وَ<قول رقم="٤٥">مَنْ رَسُوْلٌ</قول>
  </مقطع>
  <مقطع رقم="٨٤">فَيَقُوْلُ <قول رقم="٤٦">فُلَانٌ</قول>
  </مقطع>
  <مقطع رقم="٨٥">وَإِنْ قَالَ <قول رقم="٤٧">أَعَبْدَ اللّٰهِ مَرَرْتَ بِهِ أَمْ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٨٦">قُلْتَ <قول رقم="٤٨">زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٨٧">كَمَا فَعَلْتَ ذٰلِكَ في الْأَوَّلِ</مقطع>
  <مقطع رقم="٨٨">فَإِنْ قُلْتَ <قول رقم="٤٩">لَا بَلْ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٨٩">فَانْصِبْ أَيْضًا كَمَا تَقُوْلُ <قول رقم="٥٠">زَيْدًا</قول> إِذَا قَالَ <قول رقم="٥١">مَنْ رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٩٠">لِأَنَّ <قول رقم="٥٢">مَرَرْتُ بِهِ</قول> تَفْسِيْرُهُ <قول رقم="٥٣">لَقِيْتُهُ</قول> وَنَحْوُهًا</مقطع>
  <مقطع رقم="٩١">فَإِنَّمَا تَحْمِلُ الْاسْمَ عَلَى مَا يَحْمِلُ عَلَيْهِ السَّائِلُ</مقطع>
  <مقطع رقم="٩٢">كَأَنَّهُمْ قَالُوْا <قول رقم="٥٤">أَيَّهُمْ أَتَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٩٣">فَقُلْتَ <قول رقم="٥٥">زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٩٤">وَلَوْ قُلْتَ <قول رقم="٥٦">مَرَرْتُ بِعَمْرٍو وَزَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٩٥">لَكَاْنَ عَرَبِيًّا فَكَيْفَ هٰذًا</مقطع>
  <مقطع رقم="٩٦">لِأَنَّهُ فِعْلٌ وَالْمَجْرُوْرُ في مَوْضِعِ مَفْعُوْلٍ مَنْصُوْبٍ</مقطع>
  <مقطع رقم="٩٧">وَمَعْنَاهُ <قول رقم="٥٧">أَتَيْتُ</قول> وَنَحْوُهًا</مقطع>
  <مقطع رقم="٩٨">تُحْمِلُ الاسْمَ إِذَا كَاْنَ الْعَامِلُ الْأَوَّلُ فِعْلًا</مقطع>
  <مقطع رقم="٩٩">وَكَاْنَ الْمَجْرُوْرُ في مَوْضِعِ الْمَنْصُوْبِ عَلَى فِعْلٍ لَا يَنْقُضُ الْمَعْنَى</مقطع>
  <مقطع رقم="١٠٠">كَمَا قَالَ جَرِيْرٌ</مقطع>
  <شاهدة مقطع="١٠١" رقم="١">
    <بيت>
      <مصراع>جِئْنِي بِمِثْلِ بَنِي بَدْرٍ لِقَوْمِهِمِ</مصراع>
      <مصراع>أَوْ مِثْلَ أُسْرَةِ مَنْظُوْرِ بِنِ سَيَّارِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠٢">وَمِثْلُهُ قَوْلُ العَجَّاجِ</مقطع>
  <شاهدة مقطع="١٠٣" رقم="٢">
    <بيت>
      <مصراع>يَذْهَبْنَ فَىِ نَجْدٍ وَغَوْرًا غَائِرًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠٤">كَأَنَّهُ قَالَ <قول رقم="٥٨">وَيَسلُكْنَ غَوْرًا غَائِرًا</قول>
  </مقطع>
  <مقطع رقم="١٠٥">لِأَنَّ مَعْنَى <حرف>يَذْهَبْنَ فِيْهِ</حرف>
  <حرف>يَسلُكْنَ</حرف>
  </مقطع>
  <مقطع رقم="١٠٦">وَلَا يَجُوْزُ أَنْ تُضْمِرَ فِعْلًا لَا يَصِلُ إِلَّا بِحَرْفِ جَرٍّ</مقطع>
  <مقطع رقم="١٠٧">لِأَنَّ حَرْفَ الْجَرِّ لَا يُضْمَرُ</مقطع>
  <مقطع رقم="١٠٨">وَسَتَرَى بَيَانَ ذٰلِكَ</مقطع>
  <مقطع رقم="١٠٩">وَلَوْ جَازَ ذٰلِكَ لَقُلْتُ <قول رقم="٥٩">زَيْدٍ</قول> تُرِيْدُ <قول رقم="٦٠">مُرَّ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١١٠">وَمِثْلُ هٰذَا <آية>وَحُوْرًا عِيْنًا</آية> في قِرَاْءَةِ أُبَيِّ بْنِ كَعْبٍ</مقطع>
  <مقطع رقم="١١١">فَإِنْ قُلْتَ <قول رقم="٦١">لَقِيْتُ زَيْدًا وَأَمَّا عَمْرٌو فَقَدْ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١١٢">وَ<قول رقم="٦٢">لَقِيْتُ زَيْدًا وَإِذَا عَبْدُ اللّٰهِ يَضْرِبُهُ عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١١٣">فَالرَّفْعُ</مقطع>
  <مقطع رقم="١١٤">إِلَّا في قَوْلِ مَنْ قَالَ <قول رقم="٦٣">زَيْدًا رَأَيْتُهُ وَزَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١١٥">لِأَنَّ <حرف>أَمَّا</حرف> وَ<حرف>إِذَا</حرف> يُقْطَعُ بِهِمَا الْكَلَامُ</مقطع>
  <مقطع رقم="١١٦">وَهُمَا مِنْ حُرُوْفِ الِابْتِدَاءِ</مقطع>
  <مقطع رقم="١١٧">يَصْرِفَانِ الكَلَامَ إِلَى الِابْتِدَاءِ</مقطع>
  <مقطع رقم="١١٨">إِلَّا أَنْ يَدْخُلَ عَلَيْهِمَا مَا يَنْصِبُ</مقطع>
  <مقطع رقم="١١٩">وَلَا يُحْمَلُ بِوَاحِدٍ مِنْهُمَا آخِرٌ عَلَى أَوَّلَ</مقطع>
  <مقطع رقم="١٢٠">كَمَا يُحْمَلُ بِـ<حرف>ثُمَّ</حرف> وَالْـ<حرف>فَاءِ</حرف>
  </مقطع>
  <مقطع رقم="١٢١">أَلَا تَرَى أَنَّهُمُ قَرَؤُوْا <آية>وَأَمَّا ثَمُوْدُ فَهَدَيْنَاهُمْ</آية>
  </مقطع>
  <مقطع رقم="١٢٢">وَقَبْلَهُ نَصَبٌ</مقطع>
  <مقطع رقم="١٢٣">وَذٰلِكَ لِأَنَّهَا تَصْرِفُ الكَلَامَ إِلَى الِابْتِدَاءِ</مقطع>
  <مقطع رقم="١٢٤">إِلَّا أَنْ يُوْقَعَ بَعْدَهَا فِعْلٌ نَحْوُ <قول رقم="٦٤">أَمَّا زَيْدًا فَضَرَبْتُ</قول>
  </مقطع>
  <مقطع رقم="١٢٥">وَلَوْ قُلْتَ <قول رقم="٦٥">إِنَّ زَيْدًا فِيْهًا</قول>
  </مقطع>
  <مقطع رقم="١٢٦">أَوْ <قول رقم="٦٦">إِنَّ فِيْهَا زَيْدًا وَعَمْرٌو أَدْخَلْتُهُ أَوْ دَخَلْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١٢٧">رَفَعْتَهُ إِلَّا في قَوْلِ مَنْ قَالَ <قول رقم="٦٧">زَيْدًا أَدْخَلْتُهُ وَزَيْدًا دَخَلْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١٢٨">لِأَنَّ <حرف>إِنَّ</حرف> لَيْسَ بِفِعْلٍ وَإِنَّمَا هُوَ مُشَبَّهٌ بِهِ</مقطع>
  <مقطع رقم="١٢٩">أَلَا تَرَى أَنَّهُ لَا يُضْمَرُ فِيْهِ فَاعِلٌ</مقطع>
  <مقطع رقم="١٣٠">وَلَا يُؤَخَّرُ فِيْهِ الِاسْمُ</مقطع>
  <مقطع رقم="١٣١">وَإِنَّمَا هُوَ بِمَنْزِلَةِ الْفِعْلِ</مقطع>
  <مقطع رقم="١٣٢">كَمَا أَنَّ <حرف>عِشْرِيْنَ دِرْهَمًا</حرف> وَ<حرف>ثَلَاثِيْنَ رَجُلًا</حرف>
  </مقطع>
  <مقطع رقم="١٣٣">بِمَنْزِلَةِ <حرف>ضَارِبِيْنَ عَبْد اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="١٣٤">وَلَيْسَ بِفِعْلٍ وَلَا فَاعِلٍ</مقطع>
  <مقطع رقم="١٣٥">وَكَذٰلِكَ <قول رقم="٦٨">مَا أَحْسَنَ عَبْدَ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="١٣٦">وَ<قول رقم="٦٩">زَيْدٌ قَدْ رَأَيْنَاهُ</قول>
  </مقطع>
  <مقطع رقم="١٣٧">فَإِنَّمَا أَجْرَيْتَهُ -- يُعْنَى <حرف>أَحْسَنُ</حرف> -- في هٰذِهِ الْمَواضِعِ مُجْرَى الْفِعْلِ فِي عَمَلِهِ</مقطع>
  <مقطع رقم="١٣٨">وَلَيْسَ كَالْفِعْلِ وَلَمْ يَجِىءْ عَلَى أَمْثِلَتِهِ</مقطع>
  <مقطع رقم="١٣٩">وَلَا عَلَى إِضْمَارِهِ وَلَا تَقْدِيْمِهِ وَلَا تَأْخِيْرِهِ وَلَا تَصَرُّفِهِ</مقطع>
  <مقطع رقم="١٤٠">وَإِنَّمَا هُوَ بِمَنْزِلَةِ <حرف>لَدُنْ غُدْوَةً</حرف> وَ<قول رقم="٧٠">كَمْ رَجُلًا</قول>
  </مقطع>
  <مقطع رقم="١٤١">فَقَدْ عَمِلَا عَمَلَ الْفِعْلِ وَلَيْسَا بِفِعْلٍ وَلَا فَاعِلٍ</مقطع>
  <مقطع رقم="١٤٢">وَمِمَّا يُخْتَارُ فِيْهِ النَّصْبُ لِنَصْبِ الْأَوَّلِ</مقطع>
  <مقطع رقم="١٤٣">وَيَكُوْنَ الْحَرْفُ الَّذِي بَيْنَ الْأَوَّلِ وَالْآخِرِ بِمَنْزِلَةِ الْـ<حرف>وَاوِ</حرف> وَالْـ<حرف>فَاءِ</حرف> وَ<حرف>ثُمَّ</حرف>
  </مقطع>
  <مقطع رقم="١٤٤">قَوْلُكَ <قول رقم="٧١">لَقِيْتُ الْقَوْمَ كُلَّهُمْ حَتَّى عَبْدَ الْلّٰهِ لَقِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٥">وَ<قول رقم="٧٢">ضَرَبْتُ الْقَوْمَ حَتَّى زَيْدًا ضَرَبْتُ أَبَاهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٦">وَ<قول رقم="٧٣">أَتَيْتُ الْقَوْمَ أَجْمَعِيْنَ حَتَّى زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١٤٧">وَ<قول رقم="٧٤">مَرَرْتُ بِالْقَوْمِ حَتَّى زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١٤٨">فَـ<حرف>حَتَّى</حرف> تَجْرِي مَجْرَى الْـ<حرف>وَاوِ</حرف> وَ<حرف>ثُمَّ</حرف>
  </مقطع>
  <مقطع رقم="١٤٩">وَلَيْسَتْ بِمَنْزِلَةِ <حرف>أَمَّا</حرف>
  </مقطع>
  <مقطع رقم="١٥٠">لِأَنَّهَا إِنَّمَا تَكُوْنُ عَلَى الْكَلَاْمِ الَّذِي قَبْلَهَا وَلَا تُبْتَدَأُ</مقطع>
  <مقطع رقم="١٥١">وَتَقُوْلُ <قول رقم="٧٥">رَأَيْتُ الْقَوْمَ حَتَّى عَبْدَ اللّٰهِ</قول> وَتَسْكُتُ</مقطع>
  <مقطع رقم="١٥٢">فَإِنَّمَا مَعْنَاهُ أَنَّكَ قَدْ رَأَيْتَ عَبْدَ اللّٰهِ مَعَ الْقَوْمِ</مقطع>
  <مقطع رقم="١٥٣">كَمَا كَاْنَ <قول رقم="٧٦">رَأَيْتُ الْقَوْمَ وَعَبْدَ اللّٰهِ</قول> عَلَى ذٰلِكَ</مقطع>
  <مقطع رقم="١٥٤">وَكَذٰلِكَ <قول رقم="٧٧">ضَرَبْتُ الْقَوْمَ حَتَّى زَيْدًا أَنَا ضَارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٥٥">وَتَقُوْلُ <قول رقم="٧٨">هٰذَا ضَارِبُ الْقَوْمِ حَتَّى زَيْدًا يَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٥٦">إِذَا أَرَدْتَ مَعْنَى التَّنْوِيْنِ فَهِيَ كَالْوَاوِ</مقطع>
  <مقطع رقم="١٥٧">إِلَّا أَنَّكَ تَجُرُّ بِهَا إِذَا كَاْنَتْ غَايَةً</مقطع>
  <مقطع رقم="١٥٨">وَالْمَجْرُوْرُ مَفْعُوْلٌ</مقطع>
  <مقطع رقم="١٥٩">كَمَا أَنَّكَ قَدْ تَجُرُّ فِي قَوْلِكَ [كَمَا أَنَّكَ إِذَا قُلْتَ] <قول رقم="٧٩">هٰذَا ضَارِبُ زَيْدٍ غَدًا</قول>
  </مقطع>
  <مقطع رقم="١٦٠">وَتَكُفُّ النُّوْنَ [تَجُرُّ بِكَفِّ التَّنْوِيْنِ]</مقطع>
  <مقطع رقم="١٦١">وَهُوَ مَفْعُوْلٌ بِمَنْزِلَتِهِ مَنْصُوْبًا مُنَوَّنًا مَا قَبْلَهُ</مقطع>
  <مقطع رقم="١٦٢">وَلَوْ قُلْتَ <قول رقم="٨٠">هَلَكَ الْقَوْمُ حَتَّى زَيْدًا أَهْلَكْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٦٣">أُخْتِيْرَ النَّصْبُ</مقطع>
  <مقطع رقم="١٦٤">لِيُبْنَى عَلَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٦٥">كَمَا بُنِيَ مَا قَبْلَهُ مَرْفُوْعًا كَاْنَ أَوْ مَنْصُوْبًا</مقطع>
  <مقطع رقم="١٦٦">كَمَا فُعِلَ ذٰلِكَ بَعْدَ مَا بُنِيَ عَلَى الْفِعْلِ وَهُوَ مَجْرُوْرٌ</مقطع>
  <مقطع رقم="١٦٧">فَإِنْ قُلْتَ إِنَّمَا هُوَ لِنَصْبِ اللَّفْظِ</مقطع>
  <مقطع رقم="١٦٨">فَلَا تَنْصِبْ بَعْدَ <قول رقم="٨١">مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١٦٩">وَانْصِبْ بَعْدَ <قول رقم="٨٢">إِنَّ فِيْهَا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٧٠">وَإِنْ كَاْنَ الْأَوَّلُ</مقطع>
  <مقطع رقم="١٧١">لِأَنَّهُ فَىِ مَعْنَى الْحَدِيْثِ مَفْعُوْلٌ</مقطع>
  <مقطع رقم="١٧٢">فَلَا تَرْفَعْ بَعْدَ <حرف>عَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="١٧٣">إِذَا قُلْتَ <قول رقم="٨٣">عَبْدُ اللّٰهِ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٧٤">إِذَا كَاْنَ بَعْدَهُ <قول رقم="٨٤">وَزَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١٧٥">وَقَدْ يَحْسُنُ الْجَرُّ في هٰذَا كَلِّهِ وَهُوَ عَرَبِيٌّ</مقطع>
  <مقطع رقم="١٧٦">وَذٰلِكَ قَوْلُكَ <قول رقم="٨٥">لَقِيْتُ الْقَوْمَ حَتَّى عَبْدِ اللّٰهِ لَقِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٧٧">فَإِنَّمَا جَاءَ بِـ<حرف>لَقِيْتُهُ</حرف> تَوْكِيدًا بَعْدَ أَنْ جَعَلَهُ غَايَةً</مقطع>
  <مقطع رقم="١٧٨">كَمَا تَقُوْلُ <قول رقم="٨٦">مَرَرْتُ بِزَيْدٍ وَعَبْدِ اللّٰهِ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="١٧٩">قَالَ الشَّاعِرُ وَهُوَ ابْنُ مَرْوَانَ النَّحْوِىِّ</مقطع>
  <شاهدة مقطع="١٨٠" رقم="٣">
    <بيت>
      <مصراع>أَلْقَى الصَّحِيْفَةَ كَيْ يُخَفِّفَ رَحْلَهُ</مصراع>
      <مصراع>وَالزَّادَ حَتَّى نَعْلِهِ أَلْقَاهًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨١">وَالرَّفْعُ جَائِزٌ كَمَا جَازَ في الْـ<حرف>وَاوِ</حرف> وَ<حرف>ثُمَّ</حرف>
  </مقطع>
  <مقطع رقم="١٨٢">وَذٰلِكَ قَوْلُكَ <قول رقم="٨٧">لَقِيْتُ الْقَوْمَ حَتَّى عَبْدُ اللّٰهِ لَقِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٨٣">جَعَلْتَ <حرف>عَبْدَ اللّٰهِ</حرف> مُبْتَدَأً وَجَعَلْتَ <حرف>لَقِيْتُهُ</حرف> مَبْنِيًّا عَلَيْهِ</مقطع>
  <مقطع رقم="١٨٤">كَمَا جَازَ في الِابْتِدَاءِ</مقطع>
  <مقطع رقم="١٨٥">كَأَنَّكَ قُلْتَ <قول رقم="٨٨">لَقِيْتُ الْقَوْمَ حَتَّى زَيْدٌ مَلْقِيٌّ</قول>
  </مقطع>
  <مقطع رقم="١٨٦">وَ<قول رقم="٨٩">سَرَّحْتُ الْقَوْمَ حَتَّى زَيْدٌ مُسَرَّحٌ</قول>
  </مقطع>
  <مقطع رقم="١٨٧">وَهٰذَا لَا يَكُوْنُ فِيْهِ إِلَّا الرَّفْعُ</مقطع>
  <مقطع رقم="١٨٨">لِأَنَّكَ لَمْ تَذْكُرْ فِعْلًا</مقطع>
  <مقطع رقم="١٨٩">فَإِذَا كَاْنَ في الِابْتِدَاءِ <قول رقم="٩٠">زَيْدٌ لَقِيْتُهُ</قول> بِمَنْزِلَةِ <قول رقم="٩١">زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="١٩٠">جَازَ هٰهُنَا الرَّفْعُ</مقطع>
