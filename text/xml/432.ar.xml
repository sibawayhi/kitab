<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٢١٤"
     درنبورج="٢-٢٢٤"
     البكاء="٥-٣٣٣"
     هارون="٤-٥"
     يعقوب="٤-١٢٢"
     رقم="٤٣٢">

  <عنوان>
    <مقطع هوية='٢٩٨٩٨'>هٰذَا بَاْبُ بِنَاْءِ الْأَفْعَاْلِ الَّتِي هِيَ أَعْمَاْلٌ</مقطع>
    <مقطع هوية='٢٣٤٣٩'>تَعَدَّاْكَ إِلَى غَيْرِكَ وَتُوْقِعُهَا بِهِ</مقطع>
    <مقطع هوية='٥٥٠٣٤'>وَمَصَاْدِرِهَا</مقطع>
  </عنوان>
  <مقطع هوية='٥٤١٧٠'>فَالْأَفْعَاْلُ تَكُوْنُ مِنْ هٰذَا عَلَى ثَلَاْثَةِ أَبْنِيَةٍ</مقطع>
  <مقطع هوية='٤٨٣٢٩'>عَلَى <مثال>فَعَلَ يَفْعِلُ</مثال></مقطع>
  <مقطع هوية='٦٦٠٢٨'>وَ<مثال>فَعَلَ يَفْعُلُ</مثال></مقطع>
  <مقطع هوية='٦١٦١٩'>وَ<مثال>فَعِلَ يَفْعَلُ</مثال></مقطع>
  <مقطع هوية='٨٤٤٧٦'>وَيَكُوْنُ الْمَصْدَرُ <مثال>فَعْلًا</مثال>
  وَالِاْسْمُ <مثال>فَاْعِلًا</مثال></مقطع>

  <مقطع هوية='٠٩٥٨٠'>فَأَمَّا <مثال>فَعَلَ يَفْعُلُ</مثال> وَمَصْدَرُهُ</مقطع>
  <مقطع هوية='٣٤٢٣٠'>فَـ<فعل هوية='٠٢٣٥٨'>قَتَلَ يَقْتُلُ قَتْلًا</فعل> وَالِاسْمُ <اسم>قَاْتِلٌ</اسم></مقطع>
  <مقطع هوية='٢٢٦٩٨'>وَ<فعل هوية='٤٥٩٥٩'>خَلَقَهُ يَخْلُقُهُ خَلْقًا</فعل>
  وَالِاسْمُ <اسم>خَاْلِقٌ</اسم></مقطع>
  <مقطع هوية='٩٠٠٥٣'>وَ<فعل هوية='٦١٨٩٥'>دَقَّهُ يَدُقُّهُ دَقًّا</فعل>
  وَالِاسْمُ <اسم>دَاقٌّ</اسم></مقطع>

  <مقطع هوية='٨٠٥٤٠'>وَأَمَّا <مثال>فَعَلَ يَفْعِلُ</مثال></مقطع>
  <مقطع هوية='٢٤٣٣٤'>فَنَحْوُ <فعل هوية='٣٢١٢٧'>ضَرَبَ يَضْرِبُ ضَرْبًا وَهُوَ ضَاْرِبٌ</فعل></مقطع>
  <مقطع هوية='٤٥٥٢٠'>وَ<فعل هوية='٦٠٥٨٦'>حَبَسَ يَحْبِسُ حَبْسًا وَهُوَ حَاْبَسٌ</فعل></مقطع>

  <مقطع هوية='٢٥١٢٢'>وَأَمَّا <مثال>فَعِلَ يَفْعَلُ</مثال> وَمَصْدَرُهُ وَالِاسْمُ</مقطع>
  <مقطع هوية='٦٩٠٤٧'>فَنَحْوُ <فعل هوية='١٦٥٥٢'>لَحِسَهُ يَلْحَسُهُ لَحْسًا وَهُوَ لَاْحِسٌ</فعل></مقطع>
  <مقطع هوية='٢٩٦٣١'>وَ<فعل هوية='٧٢٠١٤'>لَقِمَهُ يَلْقَمُهُ لَقْمًا وَهُوَ لَاْقِمٌ</فعل></مقطع>
  <مقطع هوية='١٠٧٠٧'>وَ<فعل هوية='٥٢٩٤٦'>شَرِبَهُ يَشْرَبُهُ شَرْبًا وَهُوَ شَاْرِبٌ</فعل></مقطع>
  <مقطع هوية='٣٨٦٨٠'>وَ<فعل هوية='٧١٢٤٨'>مَلِجَهُ يَمْلَجُهُ مَلْجًا وَهُوَ مَاْلِجٌ</فعل></مقطع>

  <مقطع هوية='٠٥٦٩٩'>وَقَدْ جَاْءَ بَعْضُ مَا ذَكَرْنَا مِنْ هَذِهِ الأَبْنِيَةِ عَلَى <مثال>فُعُوْلٍ</مثال></مقطع>
  <مقطع هوية='٠٢٧٥٨'>وَذٰلِكَ <فعل هوية='٦٩٥٢١'>لَزِمَهُ يَلْزَمُهُ لُزُوْمًا</فعل></مقطع>
  <مقطع هوية='٢١٩٢٢'>وَ<فعل هوية='٢٧٨٣١'>نَهِكَهُ يَنْهَكُهُ نُهُوْكًا</فعل></مقطع>
  <مقطع هوية='١٠٩٧٠'>وَ<قول هوية='٨٦٤١٠'>وَرَدْتُ وُرُوْدًا</قول></مقطع>
  <مقطع هوية='٥٦٤٨١'>وَ<فعل هوية='٥٦٦٦٩'>جَحَدْتُهُ جُحُوْدًا</فعل></مقطع>
  <مقطع هوية='١٩٧٧٢'>شَبَّهَوْهُ بَـ<قول هوية='٠٤٠٧٥'>جَلَسَ يَجْلِسُ جُلُوْسًا</قول></مقطع>
  <مقطع هوية='١٩٩٦٠'>وَ<فعل هوية='٠٨٩٦٠'>قَعَدَ يَقْعُدُ قُعُوْدًا</فعل></مقطع>
  <مقطع هوية='١٨٤٤٦'>وَ<فعل هوية='٨٣٦٤٩'>رَكَنَ يَرْكُنُ رُكُوْنًا</فعل></مقطع>
  <مقطع هوية='١٤٦٥٩'>لِأَنَّ بِنَاْءَ الْفِعْلِ وَاْحِدٌ</مقطع>

  <مقطع هوية='٢١٧٩٧'>وَقَدْ جَاْءَ مَصْدَرُ <مثال>فَعَلَ يَفْعُلُ</مثال>
  وَ<مثال>فَعَلَ يَفْعِلُ</مثال> عَلَى <مثال>فَعَلٍ</مثال></مقطع>
  <مقطع هوية='٣٣٢٨٢'>وَذٰلِكَ <فعل هوية='٧٨٨٣٦'>حَلَبَهَا يَحْلُبُهَا حَلَبًا</فعل></مقطع>
  <مقطع هوية='٩٧٠٠٧'>وَ<قول هوية='٢٥١٦٤'>طَرَدَهَا يَطْرُدُهَا طَرَدًا</قول></مقطع>
  <مقطع هوية='٥١١٣٢'>وَ<فعل هوية='١٧٤٩٩'>سَرَقَ يَسْرِقُ سَرَقًا</فعل></مقطع>

  <مقطع هوية='١٣٣٨٧'>وَقَدْ جَاْءَ الْمَصْدَرُ أَيْضًا عَلَى <مثال>فَعِلٍ</مثال></مقطع>
  <مقطع هوية='٨١٣٢٤'>وَذٰلِكَ <فعل هوية='٧٥١٦٨'>خَنَقَهُ يَخْنُقُهُ خَنِقًا</فعل></مقطع>
  <مقطع هوية='٩٨٣٦٩'>وَ<فعل هوية='٢٩٩٠٦'>كَذَبَ يَكْذِبُ كَذِبًا</فعل></مقطع>
  <مقطع هوية='٠٢٠٦٤'>وَقَاْلُوْا <مصدر>كِذَاْبًا</مصدر> جَاْءُوْا بِهِ عَلَى <مثال>فِعَاْلٍ</مثال></مقطع>
  <مقطع هوية='٠٥٦٨٣'>كَمَا جَاْءَ عَلَى <مثال>فُعُوْلٍ</مثال></مقطع>
  <مقطع هوية='٨٥٤٩٦'>وَمِثْلُهُ <فعل هوية='٥٨٣٠٢'>حَرَمَهُ يَحْرِمُهُ حَرِمًا</فعل></مقطع>
  <مقطع هوية='٧٥٠٧٦'>وَ<فعل هوية='٣٣٤٧١'>سَرَقَهُ يَسْرِقُهُ سَرِقًا</فعل></مقطع>

  <مقطع هوية='١٦٧٣٨'>وَقَاْلُوْا <فعل هوية='١١١٨٠'>عَمَلَهُ يَعْمَلُهُ عَمَلًا</فعل></مقطع>
  <مقطع هوية='٤٦١٥٠'>فَجَاْءَ عَلَى <مثال>فَعَلٍ</مثال>
  كَمَا جَاْءَ <مصدر>السَّرَقُ</مصدر> وَ<مصدر>الطَّلَبُ</مصدر></مقطع>
  <مقطع هوية='٦٦٣٢١'>وَمَعَ ذَا أَنَّ بِنَاْءَ فِعْلِهِ كَبِنَاْءِ فِعْلِ <حرف>الْفَزَعِ</حرف>
  وَنَحْوِهِ فَشُبِّهَ بِهِ</مقطع>

  <مقطع هوية='٧٢٠٠٠'>وَقَدْ جَاْءَ مِنْ مَصَاْدِرِ مَا ذَكَرْنَا عَلَى <مثال>فُعْلٍ</مثال></مقطع>
  <مقطع هوية='٢٣٥١٧'>وَذٰلِكَ نَحْوُ <مصدر>الشُّرْبِ</مصدر> وَ<مصدر>الشُّغْلِ</مصدر></مقطع>
  <مقطع هوية='٠٢٦٥٨'>وَقَدْ جَاْءَ عَلَى <مثال>فِعْلٍ</مثال> نَحْوُ <مثال>فَعَلَهُ فِعْلًا</مثال></مقطع>
  <مقطع هوية='٨٧٤٦٧'>وَنَظِيْرُهُ <فعل هوية='٧٩٤٩١'>قَاْلَهُ قِيْلًا</فعل></مقطع>
  <مقطع هوية='٥٦١٦٤'>وَقَاْلُوْا <فعل هوية='٤٤٨٩٩'>سَخِطَهُ سَخَطًا</فعل></مقطع>
  <مقطع هوية='٦٢١٧٧'>شَبَّهُوْهُ بِالْغَضَبِ حِيْنَ اتَّفَقَ الْبِنَاْءُ وَكَاْنَ الْمَعْنَى نَحْوًا مِنْهُ</مقطع>
  <مقطع هوية='١١٩٦٩'>يَدُلُّكُ <حرف>سَاْخِطٌ</حرف> وَ<حرف>سَخِطْتُهُ</حرف>
  أَنَّهُ مُدْخَلٌ فِي بَاْبِ الْأَعْمَاْلِ الَّتِي تُرَى وَتُسْمَعُ</مقطع>
  <مقطع هوية='٠٨١٧٠'>وَهُوَ مَوْقِعُهُ بِغَيْرِهِ</مقطع>

  <مقطع هوية='٥٢٤٠٨'>وقَاْلُوْا <فعل هوية='٧٨٤٧٨'>وَدِدْتُهُ وُدًّا</فعل></مقطع>
  <مقطع هوية='٣٥٩٩٠'>مِثْلَ <فعل هوية='٥٦٨٦٢'>شَرِبْتُهُ شُرْبًا</فعل></مقطع>
  <مقطع هوية='٧٢٥٧٠'>وَقَاْلُوْا <فعل هوية='٤٢٧٦٨'>ذَكَرْتُهُ ذِكْرًا</فعل>
  كَـ<فعل هوية='٤١٥٧٥'>حَفِظْتُهُ حِفْظًا</فعل></مقطع>
  <مقطع هوية='٦٥٣٥٤'>وَقَاْلُوْا <مصدر>ذُكْرًا</مصدر>
  كَمَا قَاْلُوْا <مصدر>شُرْبًا</مصدر></مقطع>

  <مقطع هوية='١٣٢٨٧'>وَقَدْ جَاْءَ شَيْءٌ مِنْ هَذِهِ الْأَشْيَاْءِ الْمُتَعَدِّيَةِ
  الَّتِي هِيَ عَلَى <مثال>فَاْعِلٍ</مثال></مقطع>
  <مقطع هوية='٧٣٢١٣'>عَلَى <مثال>فَعِيْلٍ</مثال> حِيْنَ لَمْ يُرِيْدُوْا بِهِ الْفِعْلَ</مقطع>
  <مقطع هوية='٧٠٣٦٤'>شَبَّهُوْهُ بِـ<حرف>ظَرِيْفٍ</حرف> وَنَحْوِهِ</مقطع>
  <مقطع هوية='٦٩٠٩٠'>قَاْلُوْا <حرف>ضَرِيْبُ قِدَاْحٍ</حرف></مقطع>
  <مقطع هوية='٩٩٨٠٥'>وَ<حرف>صَرِيْمٌ</حرف> لِلصَّاْرِمِ</مقطع>
  <مقطع هوية='٥٩١٣٨'>وَ<حرف>الضَّرِيْبُ</حرف> الَّذِي يَضْرِبُ بِالْقِدَاْحِ بَيْنَهُمْ</مقطع>

  <مقطع هوية='١٧٠٠٧'>وَقَاْلَ طَرِيْفُ بْنُ تَمِيْمٍ الْعَنْبَرِيُّ</مقطع>
  <شاهدة هوية='٥٥١٣٣'>
    <بيت>
      <مصراع>أَوَ كُلَّمَا وَرَدَتْ عُكَاْظَ قَبَيْلَةٌ</مصراع>
      <مصراع>بَعَثُوْا إلَيَّ <ثبات>عَرِيْفَهُمْ</ثبات> يَتَوَسَّمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٥٤٣٩'>يْرِيْدُ <حرف>عَاْرِفَهُمْ</حرف></مقطع>

  <مقطع هوية='٧٢١١٩'>وَقَدْ جَاْءَ بَعْضُ مَصَاْدِرِ مَا ذَكَرْنَا عَلَى <مثال>فِعَاْلٍ</مثال></مقطع>
  <مقطع هوية='١٢٢٩٨'>كَمَا جَاْءَ عَلَى <مثال>فُعُوْلٍ</مثال></مقطع>
  <مقطع هوية='٤٧١٠٩'>وَذٰلِكَ نَحْوُ <فعل هوية='٩١٧٧٢'>كَذَبْتُهُ كَذَاْبًا</فعل></مقطع>
  <مقطع هوية='١٥٤٨٣'>وَ<فعل هوية='٤٨٥٩٦'>كَتَبْتُهُ كِتَاْبًا</فعل></مقطع>
  <مقطع هوية='٨٦٤٣٤'>وَ<فعل هوية='١٤٣٢٩'>حَجَبْتُهُ حِجَاْبًا</فعل></مقطع>
  <مقطع هوية='٩٩٠٩٨'>وَبَعْضُ الْعَرَبِ يَقُوْلُ <حرف>كَتْبًا</حرف> عَلَى الْقِيَاْسِ</مقطع>
  <مقطع هوية='٨٠٧٧٦'>وَنَظِيْرُهُ <فعل هوية='٣٩٣٧٨'>سُقْتُهُ سِيَاْقًا</فعل></مقطع>
  <مقطع هوية='٧٥٤٤٥'>وَ<فعل هوية='٣٩٥٨٩'>نَكَحَهَا نِكَاْحًا</فعل></مقطع>
  <مقطع هوية='٨٤١٦٤'>وَ<فعل هوية='٩٥٢٥٣'>سَفَدَهَا سِفَاْدًا</فعل></مقطع>
  <مقطع هوية='٩٣٩٥٧'>وَقَاْلُوْا <فعل هوية='١٢٤٢٥'>قَرَعَهَا قَرْعًا</فعل></مقطع>

  <مقطع هوية='٨٩٩٥٤'>وَقَدْ جَاْءَ بَعْضُ مَصَاْدِرِ مَا ذَكَرْنَا عَلَى <مثال>فِعْلَاْنٍ</مثال></مقطع>
  <مقطع هوية='٢٤٧٧٠'>وَذٰلِكَ نَحْوُ <فعل هوية='١٧٠١٨'>حَرَمَهُ يَحْرِمُهُ حِرْمَاْنًا</فعل></مقطع>
  <مقطع هوية='٥٣٧٨٢'>وَ<فعل هوية='٨٩٤١٨'>وَجَدَ الشَّيْءَ يَجِدُهُ وِجْدَاْنًا</فعل></مقطع>
  <مقطع هوية='٩٧٠٥٥'>وَمِثْلُهُ <فعل هوية='٥٢٥١٩'>أَتَيْتُهُ آتِيْهِ إِتْيَاْنًا</فعل></مقطع>
  <مقطع هوية='٤٧٦٥٨'>وَقَدْ قَاْلُوْا <حرف>أَتْيًا</حرف> عَلَى الْقِيَاْسِ</مقطع>

  <مقطع هوية='٩٣٤٧٠'>وَقَاْلُوْا <فعل هوية='٧٠٥٨٥'>لَقِيَهُ لِقْيَاْنًا</فعل></مقطع>
  <مقطع هوية='٩٦٦٧٤'>وَ<فعل هوية='٣٢٢٠٨'>عَرَفَهُ عِرْفَاْنًا</فعل></مقطع>
  <مقطع هوية='١٦٤٧٩'>وَمِثْلُ هٰذَا <فعل هوية='١٨١٤٧'>رَئِمَهُ رِئْمَاْنًا</فعل> وَقَاْلُوْا <حرف>رَأْمًا</حرف></مقطع>
  <مقطع هوية='٤٩٦٨٧'>وَقَاْلُوْا <قول هوية='٨٥٢٣٤'>حَسِبْتُهُ حِسْبَاْنًا</قول></مقطع>
  <مقطع هوية='٥٠٠٤٢'>وَ<فعل هوية='٤٥١٣٢'>رَضِيْتُهُ رِضْوَاْنًا</فعل></مقطع>
