<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٤٢"
     درنبورج="١-٢٩٩"
     البكاء="٣-١٧٨"
     هارون="٢-٢٦٩"
     يعقوب="٢-٢٨٠"
     رقم="١٧٤">

  <عنوان>
    <مقطع هوية='٩٦٨٧٨'>هٰذَا بَاْبُ مَا رَخَّمَتِ الشُّعَرَاْءُ
    فِي غَيْرِ النِّدَاْءِ اضْطِرَاْرًا</مقطع>
  </عنوان>

  <مقطع هوية='٢٩٨٢٢'>قَاْلَ <شاعر>الرّاْجِزُ</شاعر></مقطع>
  <شاهدة هوية='٣٦٢٩٠' شاعر="الرّاْجِزُ">
    <بيت>
      <مصراع>وَقَدْ وَسَطْتُ مَاْلِكًا <ثبات>وَحَنْظَلَا</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٥٥٣٤'>وَقَاْلَ <شاعر>ابْنُ أَحْمَرَ</شاعر></مقطع>
  <شاهدة هوية='٩٥٤٥٤' شاعر="ابْنُ أَحْمَرَ">
    <بيت>
      <مصراع>أَبُو حَنَشٍ يُؤَرِّقُنَا وَطَلْقٌ</مصراع>
      <مصراع>وَعَمّاْرٌ وَآوِنَةً <ثبات>أُثَاْلَا</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٦١٦١'>يْرِيْدَ <حرف>أُثَاْلَةَ</حرف></مقطع>

  <مقطع هوية='٢٧٩٨٠'>وَقَاْلَ <شاعر>جَرِيْرٌ</شاعر></مقطع>
  <شاهدة هوية='٦٥٥٦٥' شاعر="جَرِيْرٌ">
    <بيت>
      <مصراع>أَلَا أَضْحَتْ حِبَاْلُكُمْ رِمَاْمَا</مصراع>
      <مصراع>وَأَضْحَتْ مِنْكَ شَاْسِعَةً <ثبات>أُمَاْمَا</ثبات></مصراع>
    </بيت>
    <بيت>
      <مصراع>يَشُقُّ بِهَا الْعَسَاْقِلَ مُؤْجَدَاْتٌ</مصراع>
      <مصراع>وَكُلُّ عَرَنْدَسٍ يَنْفِي اللُّغَاْمَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٠٣١٦٩'>وَقَاْلَ <شاعر>زُهَيْرُ</شاعر></مقطع>
  <شاهدة هوية='٧٧١٤٧' شاعر="زُهَيْرُ">
    <بيت>
      <مصراع>خُذُوْا حَظَّكُمْ يَا آلَ <ثبات>عِكْرِمَ</ثبات> وَاذْكُرُوا</مصراع>
      <مصراع>أَوَاْصِرَنَا وَالرِّحْمُ بِالْغَيْبِ تُذْكَرُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٢٩٩١٧'>وَقَاْلَ آخَرُ وَهُوَ <شاعر>ابْنُ حَبْنَاْءَ التّمِيْمِيُّ</شاعر></مقطع>
  <شاهدة هوية='٥٢٦٧٣' شاعر="ابْنُ حَبْنَاْءَ التّمِيْمِيُّ">
    <بيت>
      <مصراع>إِنَّ <ثبات>ابْنَ حَاْرِثَ</ثبات> إِنْ أَشْتَقْ لِرُؤْيَتِهِ</مصراع>
      <مصراع>أَوْ أَمْتَدِحْهُ فَإِنَّ النَّاْسَ قَدْ عَلِمُوا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٢٥٩٧٤'>وَأَمَّا قَوْلُ <شاعر>الْأَسْوَدِ بْنِ يَعْفُرَ</شاعر></مقطع>
  <شاهدة هوية='٣٠٤٢٦' شاعر="الْأَسْوَدِ بْنِ يَعْفُرَ">
    <بيت>
      <مصراع>أَوْدَى <ثبات>ابْنُ جُلْهُمَ</ثبات> عَبّاْدٌ بِصِرْمَتِهِ</مصراع>
      <مصراع>إِنَّ <ثبات>ابْنَ جُلْهُمَ</ثبات> أَمْسَى حَيَّةَ الْوَاْدِي</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٦٥٣٢'>فَإِنَّمَا أَرَاْدَ <حرف>أُمَّهُ جُلْهُمَ</حرف></مقطع>
  <مقطع هوية='٣٤٥٣٠'>وَالْعَرَبُ يُسَمُّوْنَ الْمَرْأَةَ <حرف>جُلْهُمَ</حرف>
  وَالرّجُلُ <حرف>جُلْهُمَةَ</حرف></مقطع>

  <مقطع هوية='٠٠٠٤٧'>وَأَمَّا قَوْلُهُ وَهُوَ رَجُلٌ مِنْ بَنِى يَشْكُرَ</مقطع>
  <شاهدة هوية='٤٥٢٢١'>
    <بيت>
      <مصراع>لَهَا أَشَاْرِيْرُ مِنْ لْحَمٍ تُتَمِّرُهُ</مصراع>
      <مصراع>مِنَ <ثبات>الثَّعَاْلِي</ثبات> وَوَخْزٌ مِنْ <ثبات>أَرَاْنِيْهَا</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٨٤٧٠١'>فَزَعَمَ أَنَّ الشَّاْعِرَ لَمَّا اضْطُرَّ إِلَى الْيَاْءِ
  أَبْدَلَهَا مَكَاْنَ الْبَاْءِ</مقطع>
  <مقطع هوية='١٧٣٢٣'>كَمَا يُبْدِلُهَا مَكَاْنَ الْهَمْزَةِ</مقطع>

  <مقطع هوية='٩٢٢٨٥'>وَقَاْلَ أَيُضَا</مقطع>
  <شاهدة هوية='٤٦٤٩٥'>
    <بيت>
      <مصراع>وَمَنْهَلٍ لَيْسَ لَهُ حَوَاْزِقُ</مصراع>
      <مصراع>ولِـ<ثبات>ضَفَاْدِي</ثبات> جَمِّهِ نَقَاْنِقُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٠٣٤٦١'>وَإِنَّمَا أَرَاْدَ <حرف>ضَفَاْدِعَ</حرف></مقطع>
  <مقطع هوية='٢٦٠٩٩'>فَلَمَّا اضْطُرَّ إِلَى أَنْ يَقِفَ آخِرَ الِاسْمِ</مقطع>
  <مقطع هوية='٦٠٠٨١'>كَرِهَ أَنْ يَقِفَ حَرْفًا لَا يَدْخُلُهُ الْوَقْفُ فِي هٰذَا الْمَوْضِعِ</مقطع>
  <مقطع هوية='٧٧٦٣٧'>فَأَبْدَلَ مَكَاْنَهُ حَرْفًا يُوْقَفُ فِي الْجَرِّ وَالرَّفْعِ</مقطع>
  <مقطع هوية='٩٦٩١٩'>وَلَيْسَ هٰذَا لِأَنَّهُ حَذَفَ شَيْئًا فَجَعَلَ الْيَاْءَ عِوَضًا مِنْهُ</مقطع>
  <مقطع هوية='٤٩١٩٤'>لَوْ كَاْنَ ذٰلِكَ لَعَوَّضَتْ <حرف>حَاْرِثًا</حرف> الْيَاْءَ
  حَيْثُ حَذِفْتَ الثَّاْءَ</مقطع>
  <مقطع هوية='٨٩٩٤١'>وَجَعَلْتَ الْبَقِيَّةَ بِمَنْزِلَةِ اسْمٍ يَتَصَرَّفُ فِي الْكَلَاْمِ
  عَلَى ثَلَاْثَةِ أَحْرُفٍ</مقطع>
  <مقطع هوية='١٥٨٧٠'>وَذٰلِكَ حِيْنَ قُلْتَ <نداء>يَا حَاْرُ</نداء></مقطع>
  <مقطع هوية='٩٠٤١٧'>وَلَوْ قُلْتَ هٰذَا لَقُلْتَ <نداء>يَا مَرْوِي</نداء></مقطع>
  <مقطع هوية='٢٧٠٥٤'>إِذَا أَرَدْتَ أَنْ تَجْعَلَ مَا بَقِىَ مِنْ <حرف>مَرْوَاْنَ</حرف></مقطع>
  <مقطع هوية='١٨٠٢٧'>بِمَنْزِلَةِ مَا بَقِيَ مِنْ <حرف>حَاْرِثٍ</حرف>
  حِيْنَ قُلْتَ <نداء>يَا حَاْرُ</نداء></مقطع>

