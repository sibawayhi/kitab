     هارون="٢-١٢٨"
     يعقوب="٢-١٢٧"
     البكاء="٢-٢١٥"
     رقم="١٣٣">

  <عنوان>
    <مقطع هوية='٣١٧٦٠'>هٰذَا بَاْبُ مَا يَقَعُ مَوْقِعَ الِاسْمِ الْمُبْتَدَإِ</مقطع>
    <مقطع هوية='٠٥٦٦٧'>وَيَسُدُّ مَسَدَّهُ</مقطع>
    <مقطع هوية='٨٤٧٢٣'>لِأَنَّهُ مُسْتَقَرٌّ لِمَا بَعْدَهُ وَمَوْضِعٌ</مقطع>
  </عنوان>

  <مقطع هوية='٥٥٤٤٩'>وَالَّذِي عَمِلَ فِيْمَا بَعْدَهُ حَتَّى رَفَعَهُ</مقطع>
  <مقطع هوية='٤٢٨٢٠'>هُوَ الَّذِي عَمِلَ فِيْهِ حِيْنَ كَاْنَ قَبْلَهُ</مقطع>
  <مقطع هوية='٢٢٧٧٤'>وَلٰكِنْ كُلُّ وَاْحِدٍ مِنْهُمَا لَا يُسْتَغْنَى بِهِ عَنْ صَاْحِبِهِ</مقطع>
  <مقطع هوية='٢٧٥٥٠'>فَلَمَّا جُمِعَا اسْتَغْنَى عَلَيْهِمَا السُّكُوْتُ</مقطع>
  <مقطع هوية='٧٠٤٣٥'>حَتَّى صَاْرَا فِي الِاْسْتِغْنَاْءِ كَقَوْلِكَ
  <قول هوية='٤٥٩٠٧'>هٰذَا عَبْدُ اللهِ</قول></مقطع>

  <مقطع هوية='٥٩١٢٨'>وَذٰلِكَ قَوْلُكَ <قول هوية='٥١٠٠١'>فِيْهَا عَبْدُ اللهِ</قول></مقطع>
  <مقطع هوية='٥٩٧١٥'>وَمِثْلُهُ <قول هوية='٦٢٥٢٤'>ثَمَّ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٣٨٤٧٩'>وَ<قول هوية='٢٩٨٩٩'>هٰهُنَا عَمْرٌو</قول></مقطع>
  <مقطع هوية='٨٥٥٨٣'>وَ<قول هوية='٢٩١١٤'>أَيْنَ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٨٢٣٠٥'>وَ<قول هوية='١٤٢٩٣'>كَيْفَ عَبْدُ اللهِ</قول></مقطع>
  <مقطع هوية='٠٧٦٢٨'>وَمَا أَشْبَهَ ذٰلِكَ</مقطع>

  <مقطع هوية='٧٩٦٣٥'>فَمَعْنَى <حرف>أَيْنَ</حرف> هُوَ <حرف>فَِي أَيِّ مَكَاْنٍ</حرف></مقطع>
  <مقطع هوية='٠٥٠٦٥'>وَمَعْنَى <حرف>كَيْفَ</حرف> هُوَ <حرف>عَلَى أَيَّةِ حَاْلَةٍ</حرف></مقطع>
  <مقطع هوية='٢٥٦٩٩'>وَهٰذَا لَا يَكُوْنُ إِلَّا مَبْدُوْءًا بِهِ قَبْلَ الِاسْمِ</مقطع>
  <مقطع هوية='٥٦٩٠٥'>لِأَنَّهَا مِنْ حُرُوْفِ الاْسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='١٩٦٦١'>فَشُبِّهَتْ بَ‍ـ<حرف>هَلَ</حرف> وَ<حرف>أَلِفِ الِاْسْتِفْهَاْمِ</حرف></مقطع>
  <مقطع هوية='٧٢٨٣٤'>لِأَنَّهُنَّ يَسْتَغْنَيْنَ عَنْ الْأَلِفِ</مقطع>
  <مقطع هوية='٤١٤٣٨'>وَلَا يَكُنَّ كٰذَا إِلَّا اسْتِفْهَاْمًا</مقطع>

