  <عنوان>
    <مقطع هوية='٤٠٨٠٥'>هٰذَا بَاْبُ الْجَرِّ</مقطع>
  </عنوان>
  <مقطع هوية='٢٤٣٣٢'>وَالْجَرُّ إِنَّمَا يَكُوْنُ في كُلِّ اسْمٍ مُضَاْفٍ إِلَيْهِ</مقطع>
  <مقطع هوية='٦٤٥٢٢'>وَاعْلَمْ أَنَّ الْمُضَاْفَ إِلَيْهِ يَنْجَرُّ بِثَلَاْثَةِ أَشْيَاْءَ</مقطع>
  <مقطع هوية='٢٣٩٧٣'>بِشَيْءٍ لَيْسَ بِاسْمٍ وَلَا ظَرْفٍ</مقطع>
  <مقطع هوية='٥٢٤٦١'>وَبِشَيْءٍ يَكُوْنُ ظَرْفًا</مقطع>
  <مقطع هوية='٠٨١٠٠'>وَبِاسْمٍ لَا يَكُوْنُ ظَرْفًا</مقطع>
  <مقطع هوية='٣٦٨٩٢'>فَأَمَّا الَّذِي لَيْسَ بِاسْمٍ وَلَا ظَرْفٍ</مقطع>
  <مقطع هوية='٥٧٨٢٨'>فَقَوْلُكَ <قول هوية='١٤٥٥٠'>مَرَرْتُ بِعَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٨٦٤٣٢'>وَ<قول هوية='٨٤٣٣٨'>هٰذَا لِعَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٣١٨٦٤'> وَ<قول هوية='٣٨١٥٤'>مَا أَنْتَ كَزَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٨٩٠٨٥'>وَ<قول هوية='١٥٥٥٩'>يَا لَبَكْرٍ</قول>
  </مقطع>
  <مقطع هوية='٣٢٢٦٤'>وَ<قول هوية='٧٦٩٤٤'>تَاللهِ لَا أَفْعَلُ ذَاْ	كَ</قول>
  </مقطع>
  <مقطع هوية='٢٠٥٦٦'>وَ<حرف>مِنْ</حرف> وَ<حرف>فِي</حرف>
  <هارون مجلد="1" صفحة="419"/>
  وَ<حرف>مُذْ</حرف> وَ<حرف>عَنْ</حرف> وَ<حرف>رُبَّ</حرف> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>

  <مقطع هوية='٤٥٣٤٢'>وَكَذٰلِكَ  <قول هوية='٦٢٠٦٦'>أَخَذْتُهُ عَنْ زَيْدٍ</قول> وَ<حرف>إِلَى زَيْدٍ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٦٣١'>وَأَمَّا الْحُرُوْفُ الَّتِي تَكُوْنُ ظَرْفًا</مقطع>
  <مقطع هوية='٦٠٢٥٠'>فَنَحْوُ <حرف>خَلْفَ</حرف> وَ<حرف>أَمَامَ</حرف>
  وَ<حرف>قُدَّاْمَ</حرف>
  وَ<حرف>وَرَاْءَ</حرف>
  وَ<حرف>فَوْقَ</حرف>
  وَ<حرف>تَحْتَ</حرف>
  وَ<حرف>عِنْدَ</حرف>
  وَ<حرف>قَبْلَ</حرف>
  وَ<حرف>مَعَ</حرف>
  </مقطع>

  <مقطع هوية='٠٥٤٨٧'>وَ<حرف>عَلَى</حرف> لِأَنَّكَ تَقُوْلُ  <قول هوية='٠٤٩٧٢'>مِنْ عَلَيْكَ</قول></مقطع>
  <مقطع هوية='٧٦١٦٣'>كَمَا تَقُوْلُ  <قول هوية='٩٤٥٢٨'>مِنْ فَوْقِكَ</قول> وَ<قول هوية='٢٣٣٠٥'>ذَهَبَ مِنْ مَعِهِ</قول>
  </مقطع>

  <مقطع هوية='٩٢٥٦٥'>وَ<حرف>عَنْ</حرف> أَيْضًا ظَرْفٌ بِمَنْزِلَةِ <حرف>ذَاْتِ الْيَمِيْنِ</حرف> وَ<حرف>النَّاحِيَةِ</حرف></مقطع>
  <مقطع هوية='٧٩٩١٥'>أَلَا تَرَى أَنَّكَ تَقُوْلُ  <قول هوية='٦٨٢٢٨'>مِنْ عَنْ يَمِيْنِكَ</قول>
  </مقطع>
  <مقطع هوية='١١٨٢٤'>كَمَا تَقُوْلُ  <قول هوية='١٩٤٧٧'>مِنْ نَاحِيَةِ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع هوية='٣٨٤٣٠'>وَ<حرف>قُبَالَةَ</حرف>
  وَ<حرف>مَكَانَكَ</حرف>
  وَ<حرف>دُوْنَ</حرف>
  وَ<حرف>قَبْلَ</حرف>
  وَ<حرف>بَعْدَ</حرف>
  وَ<حرف>إِزَاءَ</حرف>
  وَ<حرف>حِذَاءَ</حرف></مقطع>
  <مقطع هوية='٤٢٤٨٩'>وَمَا أَشْبَهَ هٰذَا مِنْ الْأَمْكِنَةِ وَالْأَزْمِنَةِ</مقطع>

  <مقطع هوية='٦٠٢٤٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٦١٧٥٩'>أَنْتَ خَلْفَ عَبْدِ اللهِ</قول>
  وَ<حرف>أَمَاْمَ زَيْدٍ</حرف> وَ<حرف>قُدَّاْمَ أَخِيْكَ</حرف></مقطع>
  <مقطع هوية='٠١٥٥٩'>وَكَذٰلِكَ سَاْئِرُ هَذِهِ الْحُرُوْفِ</مقطع>

  <مقطع هوية='٩٩٧٣٤'>وَهَذِهِ الظُّرُوْفُ أَسْمَاْءٌ</مقطع>
  <مقطع هوية='٢٧٦١٢'>وَلٰكِنَّهَا صَاْرَتْ مَوَاْضِعَ لِلْأَشْيَاءِ</مقطع>
  <مقطع هوية='٣٧١٣٠'>وَأَمَّا الْأَسْمَاْءُ</مقطع>
  <مقطع هوية='٨١٤٦٣'>فَنَحْوُ <حرف>مِثْلٍ</حرف> وَ<حرف>غَيْرٍ</حرف> وَ<حرف>كُلٍّ</حرف> وَ<حرف>بَعْضٍ</حرف>

  </مقطع>
  <مقطع هوية='٥٢١٦٨'>وَمِثْلُ ذٰلِكَ أَيْضًا الْأَسْمَاْءُ الْمُخْتَصَّةُ</مقطع>
  <مقطع هوية='٠٠٣٥٧'>نَحْوُ <حرف>حِمَاْرٍ</حرف> وَ<حرف>جِدَاْرٍ</حرف> وَ<حرف>مَاْلٍ</حرف></مقطع>

  <مقطع هوية='٨٣٥٥٦'>وَ<حرف>أَفْعَلَ</حرف> نَحْوَ قَوْلِكَ  <قول هوية='٧٧٣٦٨'>هٰذَا أَعْمَلُ النَّاْسِ</قول></مقطع>
  <مقطع هوية='٨٠٠٥٦'>وَمَا أَشْبَهَ هٰذَا مِنَ الْأَسَمَاْءِ كُلِّهَا</مقطع>
  <مقطع هوية='٤٥٩٤٤'>وَذٰلِكَ قَوْلُكَ
  <قول هوية='٩٦٠٨٩'>هٰذَا مِثْلُ عَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٧٩٠٠٤'>وَ<قول هوية='٨٢٠٧٧'>هٰذَا كُلُّ مَاْلِكَ</قول>
  وَ<حرف>بَعْضُ قَوْمِكَ</حرف></مقطع>
  <مقطع هوية='٧٦٥٣٦'>وَ<قول هوية='١١٣٩٢'>هٰذَا حِمَاْرُ زَيْدٍ</قول>
  وَ<حرف>جِدَاْرُ أَخِيْكَ</حرف> وَ<حرف>مَاْلُ عَمْرٍو</حرف></مقطع>
  <مقطع هوية='٠٣٨٦٤'>وَ<قول هوية='٨٠٢٩٦'>هٰذَا أَشَدُّ النَّاْسِ</قول></مقطع>
  <مقطع هوية='٩١٢٦٢'>وَأَمَّا الْـ<حرف>بَاْءُ</حرف> وَمَا أَشْبَهَهَا</مقطع>
  <مقطع هوية='٠٥٩٩٨'>فَلَيْسَتْ بِظُرُوْفٍ وَلَا أَسْمَاْءٍ</مقطع>
  <مقطع هوية='٢٩٢١٦'>وَلٰكِنَّهَا يُضَاْفُ بِهَا إِلَى الِاسْمِ مَا قَبْلَهُ أَوْ مَا بَعْدَهُ</مقطع>
  <مقطع هوية='٤٣٩٩٥'>فَإِذَا قُلْتَ  <قول هوية='٩١٥٢٥'>يَا لَبَكْرٍ</قول>
  </مقطع>
  <مقطع هوية='٨٦٨٢٣'>فَإِنَّمَا أَرَدْتَ أَنْ تَجْعَلَ مَا يَعْمَلُ في الْمُنَاْدَى مِنَ الْفِعْلِ الْمُضْمَرِ مُضَاْفًا إِلَى بَكْرٍ بِالـ<حرف>لَّامِ</حرف>
  </مقطع>
  <مقطع هوية='٩٧٩١٦'>وَإِذَا قُلْتَ  <قول هوية='٤٢٨٦١'>مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٥٨٢٨٨'>فَإِنَّمَا أَضَفْتَ الْمُرُوْرَ إِلَى زَيْدٍ بِالْـ<حرف>بَاءِ</حرف>
  </مقطع>
  <مقطع هوية='٤٩٢٢٢'>وَكَذٰلِكَ  <قول هوية='٤٩٣٠٨'>هٰذَا لِعَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='١٤٢٦٦'>وَإِذَا قُلْتَ  <قول هوية='٤٦٨٦٥'>أَنْتَ كَعَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٨٣٢٩٠'>فَقَدْ أَضَفْتَ إِلَى عَبْدِ اللهِ الشَبَهَ بِالْـ<حرف>كَافِ</حرف>
  </مقطع>
  <مقطع هوية='٨٤٣٧٦'>وَإِذَا قُلْتَ  <قول هوية='٢٤٥٠٠'>أَخَذْتُهُ مِنْ عَبْدِ اللهِ</قول></مقطع>
  <مقطع هوية='١٥٦١٦'>فَقَدْ أَضَفْتَ الْأَخْذَ إِلَى عَبْدِ اللهِ بِـ<حرف>مِنْ</حرف></مقطع>
  <مقطع هوية='٢٨٢٤٩'>وَإِذَا قُلْتَ  <قول هوية='٨٤٧٠٧'>مُذْ زَمَاْنٍ</قول>
  </مقطع>
  <مقطع هوية='٥٧٢٧٣'>فَقَدْ أَضَفْتَ الْأَمْرَ إِلَى وَقْتٍ مِنَ الزَّمَاْنِ بِـ<حرف>مُذْ</حرف>
  </مقطع>
  <مقطع هوية='٦٢٤٠٣'>وَإِذَا قُلْتَ  <قول هوية='٨٤٢٥٠'>أَنْتَ فِي الدَّاْرِ</قول></مقطع>
  <مقطع هوية='١٨٨٢١'>فَقَدْ أَضْفَتَ كَيْنُوْنَتَكَ فِي الدَّاْرِ إِلَى الدَّاِْرِ بِـ<حرف>فِي</حرف></مقطع>
  <!--
      NB: we might expect kaynunatahu,
      but the kaf suffix of kaynunataka matches "anta" of the example
      rather than the "-ta" of the verb "adafta"
      the trick is to insert the implicit quote marks in the right places
  -->
  <مقطع هوية='٧٢٠٦١'>وَإِذَا قُلْتَ  <قول هوية='٧٧١٣٠'>فِيْكَ خَصْلَةُ سَوْءٍ</قول>
  </مقطع>
  <مقطع هوية='٣٤٢١٠'>فَقَدْ أَضَفْتَ إِلَيْهِ الرَّدَاْءَةَ بِـ<حرف>فِي</حرف>
  </مقطع>
  <مقطع هوية='٦٦٧٣٦'>وَإِذَا قُلْتَ  <قول هوية='٢١٩٠٥'>رُبَّ رَجُلٍ يَقُوْلُ ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٣١٢٣٩'>فَقَدْ أَضْفَتْ الْقَوْلَ إِلَى الرَّجُلِ بِـ<حرف>رُبَّ</حرف>
  </مقطع>
  <مقطع هوية='٦٦٢٨٣'>وَإِذَا قُلْتَ <حرف>بِاللهِ</حرف>
  وَ<حرف>وَاللهِ</حرف>
  وَ<حرف>تَالَلّٰهِ</حرف></مقطع>
  <مقطع هوية='٠٥٦٩٤'>فَإِنَّمَا أَضَفْتَ الْحَلْفَ إِلَى اللهِ سُبْحَانَهُ</مقطع>
  <مقطع هوية='٢٢١٣٢'>كَمَا أَضَفْتَ النِّدَاْءَ بِالـ<حرف>لَّامِ</حرف> إِلَى بَكْرٍ حِيْنَ قُلْتَ  <قول هوية='٠٦٦٦٠'>يَا لَبَكْرٍ</قول>
  </مقطع>
  <مقطع هوية='٧٦٥٩٣'>وَكَذٰلِكَ  <قول هوية='٩٠٢٥٩'>رَوَيْتُهُ عَنْ زَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٦٢٦٩٧'>أَضَفْتَ الرِّوَاْيَةَ إِلَى زَيْدٍ بِـ<حرف>عَنْ</حرف>
  </مقطع>

