  <عنوان>
       <مقطع هوية='٤٤٨٩٥'>هٰذَا باْبُ مَا الرَّفْعُ فِيْهِ الْوَجْهُ</مقطع>
   </عنوان>

   <مقطع هوية='٠٨٨١٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='١٧٤٢٢'>هٰذَا صَوْتٌ صَوْتُ حِمَاْرٍ</قول></مقطع>
    <مقطع هوية='٧٦١٢٠'>لِأَنَّكَ لَمْ تَذْكُرْ فَاْعِلًا</مقطع>
    <مقطع هوية='٨٠٦٦٣'>وَلِأَنَّ الْآخِرَ هُوَ الْأَوَّلُ</مقطع>
    <مقطع هوية='٨٢٠٢٦'>حَيْثُ قُلْتَ <حرف>هٰذَا</حرف></مقطع>
    <مقطع هوية='٣٠٤٧١'>فَـ<حرف>الصَّوْتُ</حرف> هُوَ <حرف>هٰذَا</حرف></مقطع>
    <مقطع هوية='٦٠٦٨٧'>ثُمَّ قُلْتَ <قول هوية='٣٢٦٤٥'>هُوَ صَوْتُ حِمَاْرٍ</قول></مقطع>
    <مقطع هوية='٢٥١١٥'>لِأَنَّكَ سَمِعْتَ نُهَاْقًا</مقطع>
    <مقطع هوية='٧٢٥١٧'>فَلَا شَكَّ فِي رَفْعِهِ</مقطع>
    <مقطع هوية='٩٨٢١٩'>وَإِنْ شَبَّهْتَ أَيْضًا فَهُوَ رَفْعٌ</مقطع>
    <مقطع هوية='٩٢٩١٦'>لِأَنَّكَ لَمْ تَذْكُرْ فَاْعِلًا يَفْعَلُهُ</مقطع>
    <مقطع هوية='٨٩٢٦٠'>وَإِنَّمَا ابْتَدَأْتَهُ</مقطع>
    <مقطع هوية='٨٧٤٦٨'>كَمَا تَبْتَدِئُ الْأَسْمَاْءَ</مقطع>
    <مقطع هوية='٣٧٣١٣'>فَقُلْتَ <حرف>هٰذَا</حرف></مقطع>
    <مقطع هوية=''>ثُمَّ بَنَيْتَ عَلَيْهِ شَيْئًا هُوَ هُوَ</مقطع>
    <مقطع هوية='٥٥٨٥٥'>فَصَاْرَ كَقَوْلِهِ <قول هوية='٦٢٥٢٩'>هٰذَا رَجُلٌ رَجُلُ حَرْبٍ</قول>
   </مقطع>
    <مقطع هوية='٠٥٩٨٧'>وَإِذَا قُلْتَ <قول هوية='١٠٤٤٧'>لَهُ صَوْتٌ</قول></مقطع>
    <مقطع هوية='٣٥٥٣٥'>فَالَّذِي فِي <حرف>اللَّاْمِ</حرف> هُوَ الْفَاْعِلُ وَلَيْسَ الْآخِرُ بِهِ</مقطع>
    <مقطع هوية='٩٤٦٠٨'>فَلَمَّا بَنَيْتَ أَوَّلَ الْكَلَاْمِ كَبِنَاْءِ الْأَسْمَاْءِ</مقطع>
    <مقطع هوية='٤٨٠٥١'>كَاْنَ آخِرُهُ أَنْ يُجْعَلَ كَالْأَسْمَاْءِ أَحْسَنَ وَأَجْوَدَ</مقطع>
    <مقطع هوية='٤٤٩٤٢'>فَصَاْرَ كَقَوْلِكَ <قول هوية='٣٧٧٨١'>هٰذَا رَأْسٌ رَأْسُ حِمَاْرٍ</قول></مقطع>
    <مقطع هوية='٤٠٣٦١'>وَ<قول هوية='٣٥٨٦٣'>هٰذَا رَجُلٌ أَخُو حَرْبٍ</قول></مقطع>
    <مقطع هوية='٠٩٠٢٩'>إِذَا أَرَدْتَ الشَّبَهَ</مقطع>
    <مقطع هوية='٦٩٨٠٦'>وَمِنْ ذٰلِكَ <قول هوية='٦٤٩٣٧'>عَلَيْهِ نَوْحٌ نَوْحُ الْحَمَاْمِ</قول> عَلَى غَيْرِ صِفَةٍ</مقطع>
    <مقطع هوية='٧١٩٥٥'>لِأَنَّ الْهَاْءَ الَّتِي فِي <حرف>عَلَيْهِ</حرف> لَيْسَتْ بِفَاْعِلٍ</مقطع>
    <مقطع هوية='٥١١٥٦'>كَمَا أَنَّكَ إِذَا قُلْتَ <حرف>فِيْهَا رَجُلٌ</حرف></مقطع>
    <مقطع هوية='٨١٠١٣'>فَالْهَاْءُ لَيْسَتْ بِفَاْعِلٍ فَعَلَ بِالرَّجُلِ شَيْئًا</مقطع>
    <مقطع هوية='٩٢٢٥٩'>فَلمَّا جَاْءَ عَلَى مِثَاْلِ الْأَسْمَاْءِ كَاْنَ الرَّفْعُ الْوَجْهَ</مقطع>

    <مقطع هوية='٢٤٢٣٨'>وَإِنْ قُلْتَ <قول هوية='١٦٥٤٦'>لَهُنَّ نَوْحٌ نَوْحَ الْحَمَاْمِ</قول></مقطع>
    <مقطع هوية='٠٤١٢٥'>فَالنَّصْبُ لِأَنَّ الْهَاْءَ هِيَ الْفَاْعِلَةُ</مقطع>
    <مقطع هوية='٩٥٧٨٣'>يَدُلُّكَ عَلَى ذٰلِكَ أَنَّ الرَّفْعَ فِي
    <حرف>هٰذَا</حرف> وَفِي <حرف>عَلَيْهِ</حرف> أَحْسَنُ</مقطع>
    <مقطع هوية='٦٧٧٨٤'>لِأَنَّكَ إِذَا قُلْتَ <حرف>هٰذَا</حرف>
    أَوْ <حرف>عَلَيْهِ</حرف></مقطع>
    <مقطع هوية='٠٠١١١'>فَأَنْتَ لَا تُرِيْدُ أَنْ تَقُوْلَ <قول هوية='٩٧٥١٥'>مَرَرْتُ بِهٰذِهِ الْأَسْمَاْءِ تَفْعَلُ فِعْلًا</قول></مقطع>
    <مقطع هوية='٤٠٢٥٤'>وَلٰكِنَّكَ جَعَلْتَ <حرف>عَلَيْهِ</حرف> مَوْضِعًا لِلنَّوْحِ</مقطع>
    <مقطع هوية='٦٠٧٢٦'>وَ<حرف>هٰذَا</حرف> مَبْنِيٌّ عَلَيْهِ نَفْسِهِ</مقطع>
    <مقطع هوية='٠٩٧١٠'>وَلَوْ نَصَبْتَ كَاْنَ وَجْهًا</مقطع>
    <مقطع هوية='٤٩٦٩٤'>لِأَنَّهُ إِذَا قَاْلَ <قول هوية='٨٥٢٨٠'>هٰذَا صَوْتٌ</قول></مقطع>
    <مقطع هوية='٦١٩١٥'>أَوْ <قول هوية='٨٩٩٥٧'>هٰذَا نَوْحٌ</قول></مقطع>
    <مقطع هوية='١٨٥٢٧'>أَوْ <قول هوية='٦٥٢٣٣'>عَلَيْهِ نَوْحٌ</قول></مقطع>
    <مقطع هوية='٢٢١٩٤'>فَقَدْ عُلِمَ أَنَّ مَعَ النَّوْحِ وَالصَّوْتِ فَاْعِلِيْنَ</مقطع>
    <مقطع هوية='٥٠٥٥٩'>فَحَمَلَهُ عَلَى المَعْنَى</مقطع>

    <مقطع هوية=''>كَمَا قَاْلَ</مقطع>
    <شاهدة هوية='٠٤٧٤٨'>
       <بيت>
          <مصراع>لِيُبْكَ يَزِيْدُ ضَاْرِعٌ لِخُصُوْمَةٍ</مصراع>
          <مصراع>وَمُخْتَبِطٌ مِمَّا تُطِيْحُ الطَّوَاْئِحُ</مصراع>
      </بيت>
   </شاهدة>

