    <عنوان>
       <مقطع هوية='١٤٠٩٣'>هٰذَا بَاْبُ مَا يَنْتَصِبُ انْتِصَاْبَ الِاسْمِ بَعْدَ الْمَقَاْدِيْرِ</مقطع>
   </عنوان>
   <مقطع هوية='٠٤٣٨٨'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤٦١٠٢'>وَيْحَهُ رَجُلًا</قول></مقطع>
   <مقطع هوية='٧٦٢٣٦'>وَ<قول هوية='٣٩٦٢١'>لِلهِ دَرُّهُ رَجُلًا</قول></مقطع>
   <مقطع هوية='٨١٥٠٥'>وَ<قول هوية='٨٣٩٦٣'>حَسْبُكَ بِهِ رَجُلًا</قول></مقطع>
   <مقطع هوية='٨٣٣٨٨'>وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
   <مقطع هوية='٥٧٧١٩'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='٦٨٣٦٦'>وَيْحَهُ مِنْ رَجُلٍ</قول></مقطع>
   <مقطع هوية='٧١٠٣٨'>وَ<قول هوية='٤٦٧٨٦'>حَسْبُكَ بِهِ مِنْ رَجُلٍ</قول></مقطع>
   <مقطع هوية='٦٦٢٧٩'>وَ<قول هوية='٠٩٢٩٠'>لِلهُ دَرُّهُ مِنْ رَجُلٍ</قول></مقطع>
    <مقطع هوية='٥٥٢٨٨'>فَدُخُوْلُ  <حرف>مِنْ</حرف>  هٰهُنَا كَدُخُوْلِهَا فِي  <حرف>كَمْ</حرف> تَوْكِيْدًا</مقطع>
    <مقطع هوية='٥٠١٠٦'>وَانْتَصَبَ الـ<حرف>رَّجُلُ</حرف> لِأَنَّهُ لَيْسَ مِنَ الْكَلَاْمِ الْأَوَّلِ</مقطع>
    <مقطع هوية=''>وَعَمِلَ فِيْهِ الْكَلَاْمُ الْأَوَّلُ</مقطع>
    <مقطع هوية='١٣٤٧٢'>فَصَاْرَتْ الْـ<حرف>هَاْءُ</حرف>  بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
    <مقطع هوية='٠٧٧١٣'>وَمَعَ هٰذَا أَيْضًا أَنَّكَ إِذَا قُلْتَ <قول هوية='٨١٦٥٨'>وَيْحَهُ</قول></مقطع>
    <مقطع هوية='٣٩٨٢٩'>فَقَدْ تَعَجَّبْتَ وَأَبْهَمْتَ</مقطع>
    <مقطع هوية='٧٥٣٠٠'>مِنْ أَيْ أُمُوْرِ الرَّجُلِ تَعَجَّبْتَ</مقطع>
    <مقطع هوية='٥٥٧٦٢'>وَأَيِّ الِأَنْوَاْعِ تَعَجَّبْتَ مِنْهُ</مقطع>
    <مقطع هوية='٧٨٣٨٨'>فَإِذَا قُلْتَ  <حرف>فَاْرِسًا</حرف>  وَ<حرف>حَاْفِظًا</حرف> فَقَدِ اخْتَصَصْتَ وَلَمْ تُبْهِمْ</مقطع>
    <مقطع هوية='٠٣٠٩٦'>وَبَيَّنْتَ فِي أَيِّ نَوْعٍ هُوَ</مقطع>
    <مقطع هوية='٧٣٨٨٤'>وَمِثْلُ ذٰلِكَ قَوْلُ عَبَّاْسٍ بْنِ مرداْس</مقطع>
    <شاهدة هوية='٥٨٥١١'>
       <بيت>
          <مصراع>وَمُرَّةُ يَحْمِيْهِمْ إِذَا مَا تَبَدَّدُوْا</مصراع>
          <مصراع>وَيَطْعَنُهُمْ شَزْرًا فَأَبْرَحْتَ فَاْرِسًا</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٩٥٨٥١'>فَكَأَنَّهُ قَاْلَ <قول هوية='٥٤٣٩٣'>فَكَفَى بِكَ فَاْرِسًا</قول></مقطع>
   <مقطع هوية='٧٩٥٢٠'>وَإِنَّمَا يُرِيْدُ <قول هوية='١٦٧٠٠'>كَفَيْتَ فَاْرِسًا</قول></مقطع>
    <مقطع هوية='٢٠٤٨٩'>وَدَخَلَتْهُ هٰذِهِ الْبَاْءُ تَوْكِيْدًا</مقطع>

    <مقطع هوية='٤٥٦١٢'>وَمِنْ ذٰلِكَ قَوْلُ الْأَعْشَى</مقطع>
    <شاهدة هوية='٤١١١١'>
       <بيت>
          <مصراع>[ تَقُوْلُ ابْنَتِي حِيْنَ جَدَّ الرَّحِيْلُ ]</مصراع>
          <مصراع>فَأَبْرَحْتَ ربًّا وَأَبْرَحْتَ جَاْرَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٨٨٦٨٩'>وَمِثْلَهُ <قول هوية='٧٩٠٠٠'>أَكْرِمْ بِهِ رَجُلًا</قول></مقطع>

