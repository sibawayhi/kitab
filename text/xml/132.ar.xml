  <عنوان>

    <مقطع هوية='٣٥٧٠٦'>هٰذَا بَاْبُ الِاْبْتِدَاْءِ</مقطع>
  </عنوان>
  <مقطع هوية='١١٥٩١'>فَاْلْمُبْتَدَأُ كُلُّ ٱسْمٍ ابْتُدِىءَ لِيُبْنَى عَلَيْهِ كَلَاْمٌ</مقطع>
  <مقطع هوية='٦٤٢٥٩'>وَالْمُبْتَدَأُ وَالْمَبْنِيُّ عَلَيْهِ رَفْعٌ</مقطع>
  <مقطع هوية='٨٠٤١٠'>فَاْلِاْبْتِدَاْءُ لَا يَكُوْنُ إِلَّا بِمَبْنِيٍّ عَلَيْهِ</مقطع>
  <مقطع هوية='٣٦٢٢٤'>فَاْلْمُبْتَدأُ الْأَوَّلُ وَالْمُبْنِيُّ مَا بَعْدَهُ عَلَيْهِ</مقطع>
  <مقطع هوية='٩٧٥٨٤'>فَهُوَ مُسْنَدٌ وَمُسْنَدٌ إِلَيْهِ</مقطع>
  <مقطع هوية='٧٣٦٧٣'>وَاْعْلَمْ أَنَّ الْمُبْتَدَأَ</مقطع>
  <مقطع هوية='٤٢٩٠٢'>لَا بُدَّ لَهُ مِنْ أَنْ يَكُوْنَ الْمَبْنِيُّ عَلَيْهِ شَيْئًا هُوَ هُوَ</مقطع>
  <مقطع هوية='٠١٥١٢'>أَوْ يَكُوْنَ فِي مَكَاْنٍ أَوْ زَمَاْنٍ</مقطع>
  <مقطع هوية='١٨٣٣٠'>وَهَذِهِ الثَّلَاْثَةُ يُذْكَرُ كُلُّ وَاحِدٍ مِنْهَا بَعْدَ مَا يُبْتَدَأُ</مقطع>
  <مقطع هوية='١٧٠٥٠'>فَأَمَّا الَّذِي يُبْنَى عَلَيْهِ شَيْءٌ هُوَ هُوَ</مقطع>
  <مقطع هوية='٩٠٣٧٠'>فَإِنَّ الْمَبْنِيَّ عَلَيْهِ يَرْتَفِعُ بِهِ كَمَا ارْتَفَعَ هُوَ بِاْلِاْبْتِدَاْءِ</مقطع>
  <مقطع هوية='٦٨٩٤٩'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٧١٣٩١'>
    <قول هوية='٥٤٨٥٢'>عَبْدُ اللهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٥٤٤٢٦'>ارْتَفَعَ <حرف>عَبْدُ اللهِ</حرف> لِأَنَّهُ ذُكِرَ لِيُبْنَى عَلَيْهِ الْـ<حرف>مُنْطَلِقُ</حرف>
  </مقطع>
  <مقطع هوية='٨٧٧٢٣'>وَاْرْتَفَعَ الْـ<حرف>مُنْطَلِقُ</حرف> لِأَنَّ الْمَبْنِيَّ عَلَى الْمُبْتَدَأِ بِمَنْزِلَتِهِ</مقطع>
  <مقطع هوية='٢٠٦٨٩'>وَزَعَمَ الْخَلِيْلِ رَحِمَهُ اللهُ أَنَّهُ يُسْتَقْبَحُ أَنْ يَقُوْلُ</مقطع>
  <مقطع هوية='٧٩٤١٥'>
    <قول هوية='٣٩٨٠٦'>قَاْئِمٌ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='١١٤٥٠'>وَذَاْكَ إِذَا لَمْ تَجْعَلْ <حرف>قَاْئِمًا</حرف> مُقَدَّمًا مَبْنِيًّا عَلَى الْمُبْتَدَإِ</مقطع>
  <مقطع هوية='٠٧٩٠٥'>كَمَا تُؤَخِّرُ وَتُقَدِّمُ فَتَقُوْلُ</مقطع>
  <مقطع هوية='٨١٠٥٣'>
    <قول هوية='٧٦٣٥٧'>ضَرَبَ زَيْدًا عَمْرٌو</قول>
  </مقطع>
  <مقطع هوية='٥٨٩٠١'>وَ <حرف>عَمْرٌو</حرف> عَلَى <حرف>ضَرَبَ</حرف> مُرْتَفِعٌ</مقطع>
  <مقطع هوية='٣٨٥٠٦'>وَكَاْنَ الْحَدُّ أَنْ يَكُوْنَ مُقَدَّمًا وَيَكُوْنَ <حرف>زَيْدٌ</حرف> مُؤَخَّرًا</مقطع>
  <مقطع هوية='٤٨٢٢٤'>وَكَذٰلِكَ هٰذَا</مقطع>
  <مقطع هوية='٢٠٢٥٦'>الْحَدُّ فِيْهِ أَنْ يَكُوْنَ الِاْبْتِدَاْءُ [ فِيْهِ ] مُقَدَّمًا</مقطع>
  <مقطع هوية='٢٥٥٣٧'>وَهٰذَا عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='٩٨٢٠٨'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٦٢٠٦٣'>
    <قول هوية='٩٦٦١٩'>تَمِيْمِيٌّ أَنَا</قول>
  </مقطع>
  <مقطع هوية='٩٧٧٥٥'>وَ<قول هوية='٩٩٦٨٤'>مَشْنُوْءٌ مَنْ يَشْنَؤُكَ</قول>
  </مقطع>
  <مقطع هوية='٤٤٧٨٦'>وَ<قول هوية='٢٥٧٣١'>رَجُلٌ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٣٨٠٣٤'>وَ<قول هوية='٥٨٥٠٩'>خَزٌّ صُفَّتُكَ</قول>
  </مقطع>
  <مقطع هوية='٨٢٨٣٣'>فَإِذَا لَمْ يُرِيْدُوْا هٰذَا الْمَعْنَى وَأَرَاْدُوَا أَنْ يَجْعَلُوْهُ فِعْلًا كَقَوْلِهِ <قول هوية='٥٦٤٨٥'>يَقُوْمُ زَيْدٌ</قول> وَ<قول هوية='١٨٢٥٤'>قَاْمَ زَيْدٌ</قول> قَبُحَ لِأَنَّهُ ٱسْمٌ</مقطع>
  <مقطع هوية='٣٢٨٩٦'>وَإِنَّمَا حَسُنَ عِنْدَهُمْ</مقطع>
  <مقطع هوية='٨٠٩٣٦'>أَنْ يَجْرِيَ مَجْرَى الْفِعْلِ إِذَا كَاْنَ صِفَةً</مقطع>
  <مقطع هوية='٢٥١٦٥'>جَرَى عَلَى مَوْصُوْفٍ</مقطع>
  <مقطع هوية='٠٠٦٢٥'>أَوْ جَرَى عَلَى ٱسْمٍ قَدْ عَمِلَ فِيْهِ</مقطع>
  <مقطع هوية='٧٠٧٥١'>كَمَا أَنَّهُ لَا يَكُوْنُ مَفْعُوْلًا فِي <حرف>ضَاْرِبٍ</حرف></مقطع>
  <مقطع هوية='٨٣٠٧٦'>حَتَّى يَكُوْنَ مَحْمُوْلًا عَلَى غَيْرِهِ</مقطع>
  <مقطع هوية='١٥٨٤٢'>فَتَقُوْلُ <قول هوية='١٣١٧٢'>هٰذَا ضَاْرِبٌ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٦٩٣٢٩'>وَ<قول هوية='٣٨٩٤٧'>أَنَا ضَاْرِبٌ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٨٦١٠٧'>وَلَا يَكُوْنُ <حرف>ضَاْرِبٌ زَيْدًا</حرف> عَلَى <قول هوية='٠٢٢٥٦'>ضَرَبْتُ زَيْدًا</قول> وَ<قول هوية='٧٩٩٨٠'>ضَرَبْتُ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٣٥٥٥٧'>فَكَمَا لَمْ يَجُزْ هٰذَا كَذٰلِكَ اسْتَقْبَحُوْا</مقطع>
  <مقطع هوية='٥٥٥٣٢'>أَنْ يَجْرِيَ مَجْرَى الْفِعْلِ الْمُبْتَدَأُ</مقطع>
  <مقطع هوية='٣٦٥٧٤'>وَلِيَكُوْنَ بَيْنَ الْفِعْلِ وَالِاسْمِ فَصْلٌ</مقطع>
  <مقطع هوية='١٧٠١٧'>وَإِنْ كَاْنَ مُوَاْفِقًا لَهُ فِي مَوَاْضِعَ كَثِيْرَةٍ</مقطع>
  <مقطع هوية='٨٩٦٠٣'>فَقَدْ يُوَاْفِقُ الشَّيْءُ الشَّيْءَ ثُمَّ يُخَاْلِفُهُ لِأَنَّهُ لَيْسَ مِثْلَهُ</مقطع>
  <مقطع هوية='٢٠٨٠٤'>وَقَدْ كَتَبْنَا ذٰلِكَ فِيْمَا مَضَى</مقطع>
  <مقطع هوية='٢٦٥٩٦'>وَسَتَرَاْهُ فِيْمَا يُسْتَقْبَلُ إِنْ شَاْءَ اللهُ</مقطع>

