<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٤"
     درنبورج="١-١٢"
     البكاء="١-٩٣"
     هارون="١-٣٧"
     يعقوب="١-٧١"
     رقم="١١">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الْفَاْعِلِ الَّذِي يَتَعَدَاْهُ فِعْلُهُ إِلَى مَفْعُوْلَيْنِ فَإِنْ شِئْتَ اقْتَصَرْتَ عَلَى الْمَفْعُوْلِ الْأَوَّلِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَإِنْ شِئْتَ تَعَدَّى إِلَى الثَّانِي</مقطع>
  <مقطع رقم="٣">كَمَا تَعَدَّى إِلَى الْأَوَّلِ</مقطع>
  <مقطع رقم="٤">وَذٰلِكَ قَوْلُكَ <قول رقم="١" مثال="١">أَعْطَى عَبْدُ اللَّهِ زَيْدًا دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول رقم="٢" مثال="١">كَسَوْتُ بِشْرًا الثِّيَاْبَ الْجِيَاْدَ</قول>
  </مقطع>
  <مقطع رقم="٦">وَمِنْ ذٰلِكَ <قول رقم="٣" مثال="١">اخْتَرْتُ الرِّجَاْلَ عَبْدَ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٧">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="٨">
    <آية سورة="٧" آية="١٥٥">وَاخْتَاْرَ مُوْسَى قَوْمَهُ سَبْعِيْنَ رَجُلًا</آية>
  </مقطع>
  <مقطع رقم="٩">وَ<قول رقم="٤" مثال="١">سَمَّيْتَهُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٥" مثال="١">كَنَّيْتُ زَيْدًا أَبَا عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="١١">وَ<قول رقم="٦" مثال="١">دَعَوْتُهُ زَيْدًا</قول> إِذَا أَرَدْتَ <حرف>دَعَوْتُهُ</حرف> الَّتِي تَجْرِي مَجْرَى <حرف>سَمَّيْتُهُ</حرف>
  </مقطع>
  <مقطع رقم="١٢">وَإِنْ عَنَيْتَ الدُّعَاْءَ إِلَى أَمْرٍ لَمْ يُجَاوِزْ مَفْعُوْلًا وَاْحِدًا</مقطع>
  <مقطع رقم="١٣">وَمِنْهُ قَوْلُ الشَّاْعِرِ</مقطع>
  <شاهدة مقطع="١٤" رقم="١">
    <بيت>
      <مصراع>أَسْتَغْفِرُ اللَّهَ ذَنْبًا لَسْتُ مُحْصِيَه</مصراع>
      <مصراع>رَبَّ الْعِبَاْدِ إِلَيْهِ الْوَجْهُ وَالْعَمَلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٥">وَقَالَ عَمْرُوْ بْنُ مَعْدِيْكَرِبَ الزُّبَيْدِىِّ</مقطع>
  <شاهدة مقطع="١٦" رقم="٢">
    <بيت>
      <مصراع>أَمَرْتُكَ الْخَيْرَ فَافْعَلْ مَا أُمِرْتَ بِهِ</مصراع>
      <مصراع>فَقَدْ تَرَكْتُكَ ذَا مَاْلٍ وَذَا نَشَبِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٧">وَإِنَّمَا فُصِلَ هٰذَا أَنَّهَا أَفْعَاْلٌ تُوَصَلُ بِحُرُوْفِ الْإِضَاْفَةِ</مقطع>
  <مقطع رقم="١٨">فَتَقُوْلُ <قول رقم="٧" مثال="١">اخْتَرْتُ فُلَاْنًا مِن الرِّجَاْلِ</قول>
  </مقطع>
  <مقطع رقم="١٩">وَ<قول رقم="٨" مثال="١">سَمَّيْتُهُ بِفُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٢٠">كَمَا تَقُوْلُ <قول رقم="٩" مثال="١">عَرَّفْتُهُ بِهٰذِهِ الْعَلَاْمَةِ</قول>
  </مقطع>
  <مقطع رقم="٢١">وَ<قول رقم="١٠" مثال="١">أَوْضَحْتُهُ بِهَا</قول>
  </مقطع>
  <مقطع رقم="٢٢">وَ<قول رقم="١١" مثال="١">أَسْتَغْفِرُ اللّٰهَ مِنْ ذٰلِكَ</قول>
  </مقطع>
  <مقطع رقم="٢٣">فَلَمَّا حَذَفُوْا حَرْفَ الْجَرِّ عَمِلَ الْفِعْلُ</مقطع>
  <مقطع رقم="٢٤">وَمِثْلُ ذٰلِكَ قَوْلُ الْمُتَلَمِّسِ</مقطع>
  <شاهدة مقطع="٢٥" رقم="٣">
    <بيت>
      <مصراع>آلَيْتَ حَبَّ الْعِرَاْقِ الدَّهْرَ أَطْعَمُهُ</مصراع>
      <مصراع>وَالْحَبُّ يَأْكُلُهُ فِي الْقَرِيَةِ السُّوْسُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٦">يُرِيْدُ <حرف>عَلَى حَبِّ الْعِرَاْقِ</حرف>
  </مقطع>
  <مقطع رقم="٢٧">وَكَمَا تَقُوْلُ <قول رقم="١٢" مثال="١">نُبِّئْتُ زَيْدًا يَقُوْلُ ذَاكَ</قول>
  </مقطع>
  <مقطع رقم="٢٨">أَيْ <حرف>عَنْ زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٩">وَلَيْسَتْ <حرف>عَنْ</حرف> وَ<حرف>عَلَى</حرف> هٰهُنَا بِمَنْزِلَةِ الْـ<حرف>بَاْءِ</حرف> فِيْ قَوْلِهِ</مقطع>
  <مقطع رقم="٣٠">
    <آية سورة="٤" آية="٧٩">كَفَى بِاللّٰهِ شَهِيْدًا</آية>
  </مقطع>
  <مقطع رقم="٣١">وَ<قول رقم="١٣">لَيْسَ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٣٢">لِأَنَّ <حرف>عَنْ</حرف> وَ<حرف>عَلَى</حرف> لَا يُفْعَلُ بِهَا ذَاكَ وَلَا بِـ<حرف>مِنْ</حرف> فِي الْوَاْجِبِ</مقطع>
  <مقطع رقم="٣٣">وَلَيْسَتْ <قول رقم="١٤" مثال="١">أَسْتَغْفِرُ اللّٰهَ ذَنْبًا</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَ<قول رقم="١٥" مثال="١">أَمَرْتُكَ الْخَيْرَ</قول>
  </مقطع>
  <مقطع رقم="٣٥">أَكْثَرَ فِيْ كَلَامِهِمْ جَمِيْعًا</مقطع>
  <مقطع رقم="٣٦">وَإِنَّمَا يَتَكَلَّمُ بِهَا بَعْضُهُمْ</مقطع>
  <مقطع رقم="٣٧">فَأَمَّا <حرف>سَمَّيْتُ</حرف> وَ<حرف>كَنَّيْتُ</حرف> فَإِنَّمَا دَخَلَتْهَا الْـ<حرف>بَاْءُ</حرف>
  </مقطع>
  <مقطع رقم="٣٨">عَلَى حَدِّ مَا دَخَلَتْ فِي <حرف>عَرَّفْتُ</حرف>
  </مقطع>
  <مقطع رقم="٣٩">تَقُوْلُ <قول رقم="١٦" مثال="١">عَرَّفْتُهُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤٠">ثُمَّ تَقُوْلُ <قول رقم="١٧" مثال="١">عَرَّفْتُهُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٤١">فَهُوَ سَوَى ذٰلِكَ الْمَعْنَى</مقطع>
  <مقطع رقم="٤٢">فَإِنَّمَا تَدْخُلُ فِي <حرف>سَمَّيْتُ</حرف> وَ<حرف>كَنَّيْتُ</حرف>
  </مقطع>
  <مقطع رقم="٤٣">عَلَى حَدِّ مَا دَخَلَتْ فِي <حرف>عَرَّفْتُهُ بِزَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٤٤">فَهٰذِهِ الْحُرُوْفُ كَاْنَ أَصْلُهَا فِي الِاسْتِعْمَاْلِ</مقطع>
  <مقطع رقم="٤٥">أَنْ تُوْصَلَ بِحُرُوْفِ الْإِضَاْفَةِ</مقطع>
  <مقطع رقم="٤٦">وَلَيْسَ كُلُّ الْفِعْلِ يُفْعَلَ بِهِ هٰذَا</مقطع>
  <مقطع رقم="٤٧">كَمَا أَنَّهُ لَيْسَ كُلُّ فِعْلٍ يَتَعَدَّى الْفَاْعِلَ</مقطع>
  <مقطع رقم="٤٨">وَلَا يَتَعَدَّى إِلَى مَفْعُوْلَيْنِ</مقطع>
  <مقطع رقم="٤٩">وَمِنْهُ قَوْلُ الْفَرَزْدَقِ</مقطع>
  <شاهدة مقطع="٥٠" رقم="٤">
    <بيت>
      <مصراع>مَنّا الَّذِيْ اخْتِيْرَ الرِّجَاْلَ سَمَاْحَةً</مصراع>
      <مصراع>وَجُوْدًا إِذَا هَبَّ الرِّيَاْحُ الزَّعَاْزِعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥١">وَقَالَ الْفَرَزْدَقُ أَيْضًا</مقطع>
  <شاهدة مقطع="٥٢" رقم="٥">
    <بيت>
      <مصراع>نُبِّئْتُ عَبْدَ اللّٰهِ بِالْجَوِّ أَصْبَحَتْ</مصراع>
      <مصراع>كِرَاْمًا مَوَاْلِيْهَا لَئِيْمًا صْمِيْمُهَا</مصراع>
    </بيت>
  </شاهدة>
