     بلاق="٢-٢٧٧"
     درنبورج="٢-٣٠١"
     البكاء="٥-٤٧٥"
     هارون="٤-١٥٨"
     يعقوب="٤-٢٧٢"
     رقم="٤٨٩">

  <عنوان>
    <مقطع هوية='٤٧٠٨٥'>هٰذَا بَاْبُ مَا لَا يُرَدُّ مِنْ هَذِهِ الْأَحْرُفِ الثَّلَاْثَةِ لِتُحَرُّكِ مَا بَعْدَهَا</مقطع>
    <مقطع هوية='٥٣٧٨٤'>وَسَأُخْبِرُكَ لِمَ ذٰلِكَ إنْ شَاْءَ اللهُ</مقطع>
  </عنوان>

  <رأس/>
  <مقطع هوية='٢٤٧٦٧'>وَهُوَ قَوْلُكَ <قول هوية='٦٨٧٨٢'>لَمْ يَخَفِ الرَّجُلُ</قول></مقطع>
  <مقطع هوية='١٠٣٤٨'>وَ<قول هوية='٢٩٥٨٢'>لَمْ يَبِعِ الرَّجُلُ</قول></مقطع>
  <مقطع هوية='٩٣١٣٥'>وَ<قول هوية='٤٥٥٩٨'>لَمْ يَقُلُ الْقَوْمُ</قول></مقطع>
  <مقطع هوية='٤٦١٥٩'>وَ<قول هوية='٧٨١٤٤'>رَمَتِ الْمَرْأَةُ</قول></مقطع>
  <مقطع هوية='٩٧٤٥١'>وَ<حرف>رَمَتَا</حرف></مقطع>
  <مقطع هوية='٥٨٩٢٢'>لِأَنَّهُمْ إِنَّمَا حَرَّكُوْا هٰذَا السَّاْكِنَ لِسَاْكِنٍ وَقَعَ بَعْدَهُ</مقطع>
  <مقطع هوية='٤١٥٣٢'>وَلَيْسَتْ بِحَرَكَةٍ تَلْزَمُ</مقطع>
  <مقطع هوية='٦٨٩١٤'>أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول هوية='٢٧٣٤٢'>لَمْ يَخَفْ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٧٦٢٤٤'>وَ<قول هوية='٠٣٥٥٥'>لَمْ يَبِعْ عَمْرٌو</قول></مقطع>
  <مقطع هوية='٨١٤٧٢'>أَسْكَنْتَ</مقطع>
  <مقطع هوية='٤٧٦٠٨'>وَكَذٰلِكَ لَوْ قُلْتَ <حرف>رَمَتْ</حرف>
  فَلَمْ تَجِئْ بِالْأَلِفِ لَحَذَفْتَهُ</مقطع>
  <مقطع هوية='٣٠٤٧١'>فَلَمَّا كَاْنَتْ هَذِهِ السَّوَاْكِنُ لَا تُحَرَّكُ</مقطع>
  <مقطع هوية='٦٤٧٤٢'>حُذِفَتْ الْأَلِفُ حَيْثُ أُسْكِنَتْ وَالْيَاْءُ وَالْوَاْوُ</مقطع>
  <مقطع هوية='٢١٣٩٧'>وَلَمْ يُرْجِعُوْا هَذِهِ الْأَحْرُفَ الثَّلَاْثَةَ</مقطع>
  <مقطع هوية='٩٩١٤٧'>حَيْثُ تَحَرَّكَتْ لِالْتِقَاْءِ السَّاْكِنَيْنِ</مقطع>
  <مقطع هوية='٩٥٨٦٧'>لِأَنَّكَ إذَا لَمْ تَذْكُرْ بَعْدَهَا سَاْكِنًا سَكَنَتْ</مقطع>

  <رأس/>
  <مقطع هوية='٣٩٧٥١'>وَكَذٰلِكَ إذَا قُلْتَ <قول هوية='٠٧٠٥٨'>لَمْ تَخَفَ أَبَاْكَ</قول>
  فِي لُغَةِ أَهْلِ الْحِجَاْزِ</مقطع>
  <مقطع هوية='٠٦٣٧١'>وَأَنْتَ تُرِيْدُ <حرف>لَمْ تَخَفْ أَبَاْكَ</حرف></مقطع>
  <مقطع هوية='٤٩٠٢٥'>وَ<حرف>لَمْ يَبِعَ أَبُوْكَ</حرف> وَ<حرف>لَمْ يَقُلَ أَبُوْكَ</حرف></مقطع>
  <مقطع هوية='٩٢١٤٦'>لِأَنَّكَ إِنَّمَا حَرَّكْتَ حَيْثُ لَمْ تَجِدْ بُدًّا مِنْ أَنْ تَحْذِفَ الْأَلِفَ</مقطع>
  <مقطع هوية='٢١٢٣٨'>وَتُلْقِيَ حَرَكَتَهَا عَلَى السَّاْكِنِ الَّذِي قَبْلَهَا</مقطع>
  <مقطع هوية='٣٤٤٤٩'>وَلَمْ تَكُنْ تَقْدِرُ عَلَى التَّخْفِيْفِ إِلَّا كَذَا</مقطع>
  <مقطع هوية='٧١٠٩٠'>كَمَا لَمْ تَجِدْ بُدًّا فِي الْتِقَاْءِ السَّاْكِنَيْنَ مِنْ التَّحْرِيْكِ</مقطع>
  <مقطع هوية='٩٧٥٣٤'>فَإِذَا لَمْ تَذْكُرْ بَعْدَ السَّاْكِنِ هَمْزَةً تُخَفَّفَ</مقطع>
  <مقطع هوية='٧٨٦٣٤'>كَاْنَتْ سَاْكِنَةً عَلَى حَاْلِهَا كَسُكُوْنِهَا
  إذَا لَمْ يُذْكَرْ بَعْدَهَا سَاْكِنٌ</مقطع>

  <رأس/>
  <مقطع هوية='٨٧٥٠٠'>وَأَمَّا قَوْلُهُمْ <حرف>لَمْ يَخَاْفَا</حرف>
  وَ<حرف>لَمْ يَقُوْلَا</حرف> وَ<حرف>لَمْ يَبِيْعَا</حرف></مقطع>
  <مقطع هوية='٦٦٦٦٨'>فَإِنَّ هَذِهِ الْحَرَكَاْتِ لَوَاْزِمُ عَلَى كُلِّ حَاْلٍ</مقطع>
  <مقطع هوية='٠٣٢٠٠'>وَإِنَّمَا حَذَفْتَ النُّوْنَ لِلْجَزْمِ</مقطع>
  <مقطع هوية='٨٢٥٨٠'>كَمَا حَذِفْتَ الْحَرَكَةَ لِلْجَزْمِ مِنْ فِعْلِ الْوَاْحِدِ</مقطع>
  <مقطع هوية='٩٤٠٣٦'>وَلَمْ تَدْخُلِ الأَلِفُ هٰهُنَا عَلَى سَاْكِنٍ</مقطع>
  <مقطع هوية='٦٣٥٠٥'>وَلَوْ كَاْنَ كَذٰلِكَ لَقَاْلَ <حرف ج="*">لَمْ يَخَفَا</حرف> كَمَا قَاْلَ <حرف>رَمَتَا</حرف></مقطع>
  <مقطع هوية='٩٤٥١٢'>فَلَمْ تُلْحِقِ التَّثْنِيَةُ شَيْئًا مَجْزُوْمًا</مقطع>
  <مقطع هوية='٠٣٦٣٧'>كَمَا أَنَّ الْأَلِفَ لَحِقَتْ فِي <حرف>رَمَتَا</حرف> شَيْئًا مَجْزُوْمًا</مقطع>

