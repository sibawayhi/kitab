<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٠٥"
     درنبورج="١-١٧٤"
     البكاء="٢-٢٤"
     هارون="١-٤١٢"
     يعقوب="١-٤٨٠"
     رقم="٩٩">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا شُبِّهَ مِنَ الْأَمَاْكِنِ الْمُخْتَصَّةِ بِالْمَكَاْنِ غَيْرِ الْمُخْتَصِّ</مقطع>
  </عنوان>
  <مقطع رقم="٢">شُبِّهَتْ بِهِ إِذْ كَاْنَتْ تَقَعُ عَلَى الْأَمَاْكِنِ</مقطع>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلِ الْعَرَبِ سَمِعْنَاْهُ مِنْهُمْ</مقطع>
  <مقطع رقم="٤">
    <قول رقم="١" مثال="١">هُوَ مِنِّي مَنْزِلَةَ الشَّغَاْفِ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول رقم="٢">هُوَ مِنِّي مَنْزِلَةَ الْوَلَدِ</قول>
  </مقطع>
  <مقطع رقم="٦">وَيَدُلُّكَ عَلَى أَنَّهُ ظَرْفٌ قَوْلُكَ</مقطع>
  <مقطع رقم="٧">
    <قول رقم="٣">هُوَ مِنِّي بِمَنْزِلَةِ الْوَلَدِ</قول>
  </مقطع>
  <مقطع رقم="٨">فَإِنَّمَا أَرَدْتَ أَنْ تَجْعَلَهُ فِي ذٰلِكَ الْمَوْضِعِ</مقطع>
  <مقطع رقم="٩">فَصَاْرَ كَقَوْلِكَ <قول رقم="٤">مَنْزِلِي مَكَاْنَ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٥">هُوَ مِنِّي مَزْجَرَ الْكَلْبِ</قول>
  </مقطع>
  <مقطع رقم="١١">وَ<قول رقم="٦">أَنْتَ مِنِّي مَقْعَدَ الْقَاْبِلَةِ</قول>
  </مقطع>
  <مقطع رقم="١٢">وَذٰلِكَ إِذَا دَنَا فَلَزِقَ بِكَ مِن بَيْنَ يَدَيْكَ</مقطع>
  <مقطع رقم="١٣">قَاْلَ الشَّاْعِرُ وَهُوَ أَبُوْ ذُؤَيْبٍ</مقطع>
  <شاهدة مقطع="١٤" رقم="١">
    <بيت>
      <مصراع>فَوَرَدْنَ وَالعَيُّوْقُ مَقْعَدَ رَاْبِىءِ</مصراع>
      <مصراع>الضُّرَبَاْءِ خَلْفَ النَّجْمِ لَا يَتَتَلَّعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٥">وَ<قول رقم="٧">هُوَ مِنْكَ مَنَاْطَ الثُّرَيَّا</قول>
  </مقطع>
  <مقطع رقم="١٦">وَقَاْلَ الْأَحْوَصُ</مقطع>
  <شاهدة مقطع="١٧" رقم="٢">
    <بيت>
      <مصراع>وَإِنَّ بَنِي حَرْبٍ كَمَا قَدْ عَلِمْتُمُ</مصراع>
      <مصراع>مَنَاْطَ الثُّرَيَّا قَدْ تَعَلَّتْ نُجُوْمُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨">وَقَاْلَ <قول رقم="٨">هُوَ مِنِّي مَعْقِدَ الْإِزَاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٩">فَأُجْرِيَ هٰذَا مَجْرَى قَوْلِكَ <قول رقم="٩">هُوَ مِنِّي مَكَاْنَ السَّاْرِيِةِ</قول>
  </مقطع>
  <مقطع رقم="٢٠">وَذٰلِكَ لِأَنَّهَا أَمَاْكِنُ</مقطع>
  <مقطع رقم="٢١">وَمَعْنَاْهَا <قول رقم="١٠">هُوَ مِنِّي فِي الْمَكَاْنِ الَّذِي تَقْعَدُ فِيْهِ الضُّرَبَاْءُ</قول>
  </مقطع>
  <مقطع رقم="٢٢">وَ<قول رقم="١١">فِي الْمَكَاْنِ الَّذِي نِيْطَ بِهِ الثُّرَيَّا</قول>
  </مقطع>
  <مقطع رقم="٢٣">وَ<قول رقم="١٢">بِالْمَكَاْنِ الَّذِي يَنْزِلُ بِهِ الْوَلَدُ</قول>
  </مقطع>
  <مقطع رقم="٢٤">وَ<قول رقم="١٣">أَنْتَ مِنِّي فِي الْمَكَاْنِ الَّذِي تَقْعَدُ فِيْهِ الْقَاْبِلَةُ</قول>
  </مقطع>
  <مقطع رقم="٢٥">وَ<قول رقم="١٤">بِالْمَكَاْنِ الَّذِي يُعْقَدُ عَلَيْهِ الْإِزَاْرُ</قول>
  </مقطع>
  <مقطع رقم="٢٦">فَإِنَّمَا أَرَاْدَ هٰذَا الْمَعْنَى وَلٰكِنَّهُ حَذَفَ الْكَلَاْمَ</مقطع>
  <مقطع رقم="٢٧">وَجَاْزَ ذٰلِكَ كَمَا جَاْزَ <قول رقم="١٥">دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٢٨">وَ<قول رقم="١٦">ذَهَبْتُ الشَّأْمَ</قول>
  </مقطع>
  <مقطع رقم="٢٩">لِأَنَّهَا أَمَاْكِنُ وَإِنْ لَمْ تَكُنْ كَالْمَكَاْنِ</مقطع>
  <مقطع رقم="٣٠">وَلَيْسَ يَجُوْزُ هٰذَا فِي كُلِّ شَيْءٍ</مقطع>
  <مقطع رقم="٣١">لَوْ قُلْتَ <قول رقم="١٧">هُوَ مِنِّي مَجْلِسَكَ</قول> أَوْ <قول رقم="١٨">مُتَّكَأَ زَيْدٍ</قول> أَوْ <قول رقم="١٩">مَربِطَ الْفَرَسِ</قول> لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٣٢">فَاسْتَعْمِلْ مِنْ هٰذَا مَا اسْتَعْمَلَتِ الْعَرَبُ وَأَجِزْ مِنْهُ مَا أَجَاْزُوْا</مقطع>
  <مقطع رقم="٣٣">وَمِنْ ذٰلِكَ قَوْلُ الْعَرَبِ <قول رقم="٢٠">هُوَ مِنِّي دَرَجَ السَّيْلِ</قول>
  </مقطع>
  <مقطع رقم="٣٤">أَيْ <قول رقم="٢١">مَكَاْنَ دَرَجِ السَّيْلِ مَنَ السَّيْلِ</قول>
  </مقطع>
  <مقطع رقم="٣٥">قَاْلَ الشَّاْعِرُ وَهُوَ ابْنُ هَرْمَةَ</مقطع>
  <شاهدة مقطع="٣٦" رقم="٣">
    <بيت>
      <مصراع>أَنُصْبٌ لِلْمَنِيَّةِ تَعْتَرِيْهِمْ</مصراع>
      <مصراع>رِجَاْلِي أَمْ هُمُ دَرَجَ السُّيُوْلِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٧">وَيُقَاْلُ <قول رقم="٢٢">رَجَعَ أَدْرَاْجَهُ</قول> أَيْ رَجَعَ فِي الطَّرِيْقِ الَّذِي جَاْءَ فِيْهِ</مقطع>
  <مقطع رقم="٣٨">هٰذَا مَعْنَاْهُ فَأُجْرِيَ مَجْرَى مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٣٩">كَمَا أَجْرَوْا ذٰلِكَ الْمَجْرَى <حرف>دَرَجَ السُّيُوْلِ</حرف>
  </مقطع>
  <مقطع رقم="٤٠">وَأَمَّا مَا يَرْتَفِعُ مِنْ هٰذَا الْبَاْبِ</مقطع>
  <مقطع رقم="٤١">فَقَوْلُكَ <قول رقم="٢٣">هُوَ مِنِّي فَرْسَخَاْنِ</قول>
  </مقطع>
  <مقطع رقم="٤٢">وَ<قول رقم="٢٤">هُوَ مِنِّي عَدْوَةُ الْفَرَسِ</قول>
  </مقطع>
  <مقطع رقم="٤٣">وَ <حرف>دَعْوَةُ الرَّجُلِ</حرف> وَ<حرف>غَلْوَةُ السَّهْمِ</حرف>
  </مقطع>
  <مقطع رقم="٤٤">وَ<قول رقم="٢٥">هُوَ مِنِّي يَوْمَاْنِ</قول>
  </مقطع>
  <مقطع رقم="٤٥">وَ<قول رقم="٢٦">هُوَ مِنِّي فَوْتُ الْيَدِ</قول>
  </مقطع>
  <مقطع رقم="٤٦">فَإِنَّمَا فَاْرَقَ هٰذَا الْبَاْبَ الْأَوَّلَ لِأَنَّ مَعْنَى هٰذَا أَنَّهُ يُخْبِرُ بَيْنَهُ وَبَيْنَه فَرْسَخَيْنِ وَيَوْمَيْنِ وَدَعْوَةَ الَّرَجُلِ وَفَوْتًا</مقطع>
  <مقطع رقم="٤٧">وَمَعْنَى <حرف>فَوْتِ الْيَدِ</حرف> أَنَّهُ يِرِيْدُ أَنْ يُقَرَّبَ مَا بَيْنَهُ وَبَيْنَهُ</مقطع>
  <مقطع رقم="٤٨">فَهٰذَا عَلَى هٰذَا الْمَعْنَى</مقطع>
  <مقطع رقم="٤٩">وَجَرَى عَلَى الْكَلَاْمِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٥٠">كَأَنَّهُ هُوَ لِسَعَةِ الْكَلَاْمِ</مقطع>
  <مقطع رقم="٥١">كَمَا قَاْلُوْا <قول رقم="٢٧">أَخْطَبُ مَا يَكُوْنُ الْأَمِيْرُ يَوْمُ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع رقم="٥٢">وَأَمَّا قَوْلُ الْعَرَبِ <قول رقم="٢٨">أَنْتَ مِنِّي مَرْأًى وَمَسْمَعٌ</قول>
  </مقطع>
  <مقطع رقم="٥٣">فَإِنَّمَا رَفَعُوْهُ لِأَنَّهُمْ جَعَلُوْهُ هُوَ الْأَوَّلُ</مقطع>
  <مقطع رقم="٥٤">حَتَّى صَاْرَ بِمَنْزِلَةِ قَوْلِهِمْ <قول رقم="٢٩">أَنْتَ مِنِّي قَرِيْبٌ</قول>
  </مقطع>
  <مقطع رقم="٥٥">وَزَعَمَ يُوْنُسُ أَنَّ نَاْسًا مِنَ الْعَرَبِ يَقُوْلُوْنَ</مقطع>
  <شاهدة مقطع="٥٦" رقم="٤">
    <بيت>
      <مصراع>أَنُصْبٌ لِلْمَنِيَّةِ تَعْتَرِيْهِمْ</مصراع>
      <مصراع>رِجَاْلِي أَمْ هُمُ دَرَجُ السُّيُوْلِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٧">فَجَعَلَهُم هُمُ الدَّرَجَ</مقطع>
  <مقطع رقم="٥٨">كَمَا تَقُوْلُ <قول رقم="٣٠">زَيْدٌ قَصْدُكَ</قول> إِذَا جَعَلْتَ الْقَصْدَ زَيْدًا</مقطع>
  <مقطع رقم="٥٩">وَكَمَا يَجُوْزُ لَكَ أَنْ تَقُوْلَ <قول رقم="٣١">عَبْدُ اللّٰهِ خَلْفُكَ</قول> إِذَا جَعَلْتَهُ هُوَ الْخَلْفَ</مقطع>
  <مقطع رقم="٦٠">وَاعْلَمْ أَنَّ هٰذِهِ الْحُرُوْفَ بَعْضُهَا أَشَدُّ تَمَكُّنًا فِي أَنْ يَكُوْنَ اسْمًا مِنْ بَعْضٍ</مقطع>
  <مقطع رقم="٦١">كَالْـ<حرف>قَصْدِ</حرف> وَالـ<حرف>نَّحْوِ</حرف> وَالـ<حرف>قُبْلِ</حرف> وَالـ<حرف>نَّاْحِيَةِ</حرف>
  </مقطع>
  <مقطع رقم="٦٢">وَأَمَّا الْـ<حرف>خَلْفُ</حرف> وَالْـ<حرف>أَمَاْمُ</حرف> وَالـ<حرف>تَّحْتُ</حرف> وَاالـ<حرف>دُّوْنُ</حرف> فَتَكُوْنُ أَسْمَاْءً</مقطع>
  <مقطع رقم="٦٣">وَكَيْنُوْنَةُ تِلْكَ أَسْمَاْءً أَكْثَرُ وَأَجْرَى فِي كَلَاْمِهِمْ</مقطع>
  <مقطع رقم="٦٤">وَكَذٰلِكَ <حرف>مَرأًى</حرف> وَ<حرف>مَسْمَعٌ</حرف> كَيْنُوْنَتُهُمَا أَسْمَاْءً أَكْثَرُ</مقطع>
  <مقطع رقم="٦٥">وَمَع ذٰلِكَ إِنَّهُمْ جَعَلُوْهُ اسْمًا خَاْصًّا بِمَنْزِلَةِ الـ<حرف>مَجْلِسِ</حرف> وَالـ<حرف>مُتَّكَأِ</حرف> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
  <مقطع رقم="٦٦">فَكَرِهُوْا أَنْ يَجْعَلُوْهُ ظَرْفًا</مقطع>
  <مقطع رقم="٦٧">وَقَدْ زَعَمُوْا أَنَّ بَعْضَ النَّاْسِ يَنْصِبُهُ يَجْعَلُهُ بِمَنْزِلَةِ <حرف>دَرَجِ السُّيُوْلِ</حرف> فِيَنْصِبُهُ وَهُوَ قَلِيْلٌ</مقطع>
  <مقطع رقم="٦٨">كَأَنَّهُمْ لَمَّا قَاْلُوْا <حرف>بِمَرْأًى وَمَسْمَعٍ</حرف> فَصَاْرَ غَيْرَ الِاسْمِ الَأَوَّلِ فِي الْمَعْنَى وَاللَّفْظِ</مقطع>
  <مقطع رقم="٦٩">شَبَّهُوْهُ بِقَوْلِهِ <قول رقم="٣٢">هُوَ مِنِّي بِمَنْزِلَةِ الْوَلَدِ</قول>
  </مقطع>
  <مقطع رقم="٧٠">وَقَدْ زَعَمَ يُوْنُسُ أَنَّ نَاْسًا يَقُوْلُوْنَ <قول رقم="٣٣">هُوَ مِنِّي مَزْجَرُ الْكَلْب</قول>
  </مقطع>
  <مقطع رقم="٧١">يَجْعَلُوْنَهُ بِمَنْزِلَةِ <حرف>مَرْأًى وَمَسْمَعٍ</حرف>
  </مقطع>
  <مقطع رقم="٧٢">وَكَذٰلِكَ <حرف>مَقْعَدٌ</حرف> وَ<حرف>مَنَاْطٌ</حرف>
  </مقطع>
  <مقطع رقم="٧٣">يَجْعَلُوْنَهُ هُوَ الْأَوَّلَ فَيُجْرَى كَقَوْلِ الشَّاْعِرِ</مقطع>
  <شاهدة مقطع="٧٤" رقم="٥">
    <بيت>
      <مصراع>وَأَنْتَ مَكَاْنُكَ مِنْ وَاْئِلٍ</مصراع>
      <مصراع>مَكَاْنُ الْقُرَاْدِ مِنِ اسْتِ الْجَمَلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٥">وَإِنَّمَا حَسُنَ الرَّفْعُ هٰهُنَا لِأَنَّهُ جَعَلَ الْآخِرَ هُوَ الْأَوَّلَ</مقطع>
  <مقطع رقم="٧٦">كَقَوْلِكَ <قول رقم="٣٤">لَهُ رَأْسٌ رَأْسُ الْحِمَاْرِ</قول>
  </مقطع>
  <مقطع رقم="٧٧">وَلَوْ جَعَلَ الْآخِرَ ظَرْفًا جَاْزَ</مقطع>
  <مقطع رقم="٧٨">وَلٰكِنَّ الشَّاْعِرَ أَرَاْدَ أَنْ يُشَبِّهَ مَكَاْنَهُ بِذٰلِكَ الْمَكَاْنِ</مقطع>
  <مقطع رقم="٧٩">وَأَمَّا قَوْلُهُمْ <قول رقم="٣٥">دَاْرِي خَلْفَ دَاْرِكَ فَرْسَخًا</قول>
  </مقطع>
  <مقطع رقم="٨٠">فَانْتَصَبَ لِأَنَّ <حرف>خَلْفَ</حرف> خَبَرٌ لِلـ<حرف>دَّاْرِ</حرف>
  </مقطع>
  <مقطع رقم="٨١">وَهُوَ كَلَاْمٌ قَدْ عَمِلَ بَعْضُهُ فِي بَعْضٍ وَاسْتَغْنَى</مقطع>
  <مقطع رقم="٨٢">فَلَمَّا قَاْلَ <قول رقم="٣٦">دَاْرِي خَلْفَ دَاْرِكَ</قول> أَبْهَمَ</مقطع>
  <مقطع رقم="٨٣">فَلَمْ يُدْرَ مَا قَدْرُ ذَاْكَ</مقطع>
  <مقطع رقم="٨٤">فَقَاْلَ <حرف>فَرْسَخًا</حرف> وَ<حرف>ذِرَاْعًا</حرف> وَ<حرف>مِيْلًا</حرف> أَرَاْدَ أَنْ يُبَيِّنَ</مقطع>
  <مقطع رقم="٨٥">فَيَعْمَلُ هٰذَا الْكَلَاْمُ فِي هٰذِهِ الْغَاْيَاْتِ بِالنَّصْبِ</مقطع>
  <مقطع رقم="٨٦">كَمَا عَمِلَ <قول رقم="٣٧">لَهُ عِشْرُوْنَ دِرْهَمًا</قول> فِي الـ<حرف>دِرْهَمِ</حرف>
  </مقطع>
  <مقطع رقم="٨٧">كَأَنَّ هٰذَا الْكَلَاْمَ شَيْءٌ مُنَوَّنٌ يَعْمَلُ فِيْمَا لَيْسَ مِنِ اسْمِهِ وَلَا هُوَ هُوَ</مقطع>
  <مقطع رقم="٨٨">كَمَا كَاْنَ <حرف>أَفْضَلُهُمْ رَجُلًا</حرف> بِتِلْكَ الْمَنْزِلَةِ</مقطع>
  <مقطع رقم="٨٩">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٣٨">دَاْرِي خَلْفَ دَاْرِكَ فَرْسَخَاْنِ</قول>
  </مقطع>
  <مقطع رقم="٩٠">تُلْغِي <حرف>خَلْفَ</حرف> كَمَا تُلْغِي <حرف>فِيْهَا</حرف> إَذَا قُلْتَ <قول رقم="٣٩">فِيْهَا زَيْدٌ قَاْئِمٌ</قول>
  </مقطع>
  <مقطع رقم="٩١">وَزَعَمَ يُوْنُسُ أَنَّ أَبَا عَمْرٍو كَاْنَ يَقُوْلُ <قول رقم="٤٠">دَاْرِي مِنْ خَلْفِ دَاْرِكَ فَرْسَخَاْنِ</قول>
  </مقطع>
  <مقطع رقم="٩٢">فَشَبَّهَهُ بِقَوْلِكَ <قول رقم="٤١">دَاْرُكَ مِنِّي فَرْسَخَاْنِ</قول> لِأَنَّ <حرف>خَلْفَ</حرف> هٰهُنَا اسْمٌ</مقطع>
  <مقطع رقم="٩٣">وَجَعَلَ <حرف>مِنْ</حرف> فِيْهَا بِمَنْزِلَتِهَا فِي الِاسْمِ</مقطع>
  <مقطع رقم="٩٤">وَهٰذَا مَذْهَبٌ قَوِيٌّ</مقطع>
  <مقطع رقم="٩٥">وَأَمَّا الْعَرَبُ فَتَجْعَلُهُ بِمَنْزِلَةِ قَوْلِكَ <حرف>خَلْفَ</حرف>
  </مقطع>
  <مقطع رقم="٩٦">فَتَنْصِبُ وَتَرْفَعُ لِأَنَّكَ تَقُوْلُ <قول رقم="٤٢">أَنْتَ مِنْ خَلْفِي</قول>
  </مقطع>
  <مقطع رقم="٩٧">وَمَعْنَاْهُ <قول رقم="٤٣">أَنْتَ خَلْفِي</قول> وَلٰكِنَّ الْكَلَاْمَ حَذْفٌ</مقطع>
  <مقطع رقم="٩٨">أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول رقم="٤٤">دَاْرُكَ مِنْ خَلْفِ دَاْرِي</قول> فَيَسْتَغْنِي الْكَلَاْمُ</مقطع>
  <مقطع رقم="٩٩">وَتَقُوْلُ <قول رقم="٤٥">أَنْتَ مِنِّي فَرْسَخَيْنِ</قول>
  </مقطع>
  <مقطع رقم="١٠٠">أَيْ <قول رقم="٤٦">أَنْتَ مِنِّي مَا دُمْنَا نَسِيْرُ فَرْسَخَيْنِ</قول>
  </مقطع>
  <مقطع رقم="١٠١">فَيَكُوْنُ ظَرْفًا كَمَا كَاْنَ مَا قَبْلَهُ مِمَّا شُبِّهَ بِالْمَكَاْنِ</مقطع>
  <رأس هو="٠">
    <عنوان>ظُرُوْفُ الدَّهْرِ</عنوان>
  </رأس>
  <مقطع رقم="١٠٢">وَأَمَّا الْوَقْتُ وَالسَّاْعَاْتُ وَالْأَيَّاْمُ وَالشُّهُوْرُ وَالسِّنُوْنُ</مقطع>
  <مقطع رقم="١٠٣">وَمَا أَشْبَهَ ذٰلِكَ مِنَ الْأَزْمِنَةِ وَالْأَحْيَاْنِ الَّتِي تَكُوْنُ فِي الدَّهْرِ</مقطع>
  <مقطع رقم="١٠٤">فَهُوَ قَوْلُكَ <قول رقم="٤٧">الْقِتَاْلُ يَوْمَ الْجُمْعَةِ</قول> إِذَا جَعَلْتَ <حرف>يَوْمَ الْجُمْعَةِ</حرف> ظَرْفًا</مقطع>
  <مقطع رقم="١٠٥">وَ<قول رقم="٤٨">الْهِلَاْلُ اللَّيْلِةَ</قول>
  </مقطع>
  <مقطع رقم="١٠٦">وَإِنَّمَا انْتَصَبَا لِأَنَّكَ جَعَلْتَهُمَا ظَرْفًا</مقطع>
  <مقطع رقم="١٠٧">وَجَعَلْتَ الْقِتَاْلَ فِي الْجُمْعَةِ وَالْهِلَاْلَ فِي اللَّيْلَةِ</مقطع>
  <مقطع رقم="١٠٨">وَإِنْ قُلْتَ <قول رقم="٤٩">اللَّيْلَةَ الْهِلَاْلُ</قول> وَ<قول رقم="٥٠">الْيَوْمَ الْقِتَاْلُ</قول> نَصَبْتَ</مقطع>
  <مقطع رقم="١٠٩">التَّقْدِيْمُ وَالتَّأْخِيْرُ فِي ذٰلِكَ سَوَاْءٌ</مقطع>
  <مقطع رقم="١١٠">وَإِنْ شِئْتَ رَفَعْتَ فَجَعَلْتَ الْآخِرَ الْأَوَّلَ</مقطع>
  <مقطع رقم="١١١">وَكَذٰلِكَ <قول رقم="٥١">الْيَوْمَ الْجُمْعَةُ</قول> وَ<قول رقم="٥٢">الْيَوْمَ السَّبْتُ</قول> وَإِنْ شِئْتَ رَفَعْتَ</مقطع>
  <مقطع رقم="١١٢">فَأَمَّا <قول رقم="٥٣">الْيَوْمُ الْأَحَدُ</قول> وَ<قول رقم="٥٤">الْيَوْمُ الِاثْنَاْنِ</قول>
  </مقطع>
  <مقطع رقم="١١٣">فَإِنَّهُ لَا يَكُوْنُ إِلَّا رَفْعًا</مقطع>
  <مقطع رقم="١١٤">وَكَذٰلِكَ إِلَى <حرف>الْخَمِيْسِ</حرف>
  </مقطع>
  <مقطع رقم="١١٥">لِأَنَّهُ لَيْسَ بِعَمَلٍ فِيْهِ</مقطع>
  <مقطع رقم="١١٦">كَأَنَّكَ أَرَدْتَ أَنْ تَقُوْلَ <قول رقم="٥٥">الْيَوْمُ الْخَاْمِسُ وَالَّرَاْبِعُ</قول>
  </مقطع>
  <مقطع رقم="١١٧">وَكَذٰلِكَ <قول رقم="٥٦">الْيَوْمُ خَمْسَةَ عَشَرَ مِنَ الشَّهْرِ</قول>
  </مقطع>
  <مقطع رقم="١١٨">إِنَّمَا أَرَدْتَ <قول رقم="٥٧">هٰذَا الْيَوْمُ تَمَاْمُ خَمْسَةَ عَشَرَ مِنَ الشَّهْرِ</قول>
  </مقطع>
  <مقطع رقم="١١٩">وَ<قول رقم="٥٨">يَوْمَاْنِ مِنَ الشَّهْرِ</قول>
  </مقطع>
  <مقطع رقم="١٢٠">رُفِعَ كُلُّهُ</مقطع>
  <مقطع رقم="١٢١">فَصَاْرَ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٥٩">الْعَاْمُ عَاْمُهَا</قول>
  </مقطع>
  <مقطع رقم="١٢٢">وَمِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول رقم="٦٠">الْيَوْمَ يَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="١٢٣">فَيَجْعَلُ <حرف>الْيَوْمَ</حرف> الْأَوَّلَ بِمَنْزِلَةِ <حرف>الْآنَ</حرف>
  </مقطع>
  <مقطع رقم="١٢٤">لِأَنَّ الرَّجُلَ قَدْ يَقُوْلُ <قول رقم="٦١">أَنَا الْيَوْمَ أَفْعَلُ ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٢٥">وَلَا يُرِيْدُ يَوْمًا بِعَيْنِهِ</مقطع>
  <مقطع رقم="١٢٦">وَتَقُوْلُ <قول رقم="٦٢">عَهْدِي بِهِ قَرِيْبًا وَحَدِيْثًا</قول>
  </مقطع>
  <مقطع رقم="١٢٧">إِذَا لَمْ تَجْعَلِ الْآخِرَ هُوَ الْأَوَّلَ</مقطع>
  <مقطع رقم="١٢٨">فَإِنْ جَعَلْتَ الْآخِرَ هُوَ الْأَوَّلَ رَفَعْتَ</مقطع>
  <مقطع رقم="١٢٩">وَإِذَا نَصَبْتَ جَعَلْتَ الْـ<حرف>حَدِيْثَ</حرف> وَالْـ<حرف>قَرِيْبَ</حرف> مِنَ الدَّهْرِ</مقطع>
  <مقطع رقم="١٣٠">وَتَقُوْلُ <قول رقم="٦٣">عَهْدِي بِهِ قَاْئِمًا</قول>
  </مقطع>
  <مقطع رقم="١٣١">وَ<قول رقم="٦٤">عِلْمِي بِهِ ذَا مَاْلٍ</قول>
  </مقطع>
  <مقطع رقم="١٣٢">فَتَنْصِبُ عَلَى أَنَّهُ حَاْلٌ وَلَيْسَ بِالْعَهْدِ وَلَا الْعِلْمِ وَلَيْسَا هُنَا ظَرْفِيْنِ</مقطع>
  <مقطع رقم="١٣٣">وَتَقُوْلُ <قول رقم="٦٥">ضَرْبِي عَبْدَ اللّٰهِ قَاْئِمًا</قول> عَلَى هٰذَا الَّذِي ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="١٣٤">وَاعْلَمْ أَنَّ ظُرُوْفَ الدَّهْرِ أَشَدُّ تَمَكُّنًا فِي الْأَسْمَاْءِ</مقطع>
  <مقطع رقم="١٣٥">لِأَنَّهَا تَكُوْنُ فَاْعِلَةً وَمَفْعُوْلَةً</مقطع>
  <مقطع رقم="١٣٦">تَقُوْلُ <قول رقم="٦٦">أَهْلَكَكَ اللَّيْلُ وَالنَّهَاْرُ</قول>
  </مقطع>
  <مقطع رقم="١٣٧">وَ<قول رقم="٦٧">اسْتَوْفَيْتَ أَيَّاْمَكَ</قول>
  </مقطع>
  <مقطع رقم="١٣٨">فَأُجْرِيَ الدَّهْرُ هٰذَا الْمَجْرَى</مقطع>
  <مقطع رقم="١٣٩">فَأَجْرِ الْأَشْيَاْءَ كَمَا أَجْرَوْهَا</مقطع>
