     بلاق="٢-٣١٥"
     درنبورج="٢-٣٤٣"
     البكاء="٥-٥٥٥"
     هارون="٤-٢٤٢"
     يعقوب="٤-٣٦٧"
     رقم="٥١١">

  <عنوان>
    <مقطع هوية='٤٦٢٠٧'>هٰذَا بَاْبُ  مَا بَنَتْ الْعَرَبُ مِنَ الْأَسْمَاْءِ وَالصِّفَاْتِ وَالْأَفْعَاْلِ</مقطع>
  </عنوان>

  <مقطع هوية='٩٨٩٥٢'>غَيْرِ الْمُعْتَلَّةِ وَالْمُعْتَلَّةِ</مقطع>
  <مقطع هوية='٥٨٤٩٧'>وَمَا قِيْسَ مِنَ الْمُعْتَلِّ الَّذِي لَا يَتَكَلَّمُوْنَ بِهِ</مقطع>
  <مقطع هوية='٨٨٩٥٨'>وَلَمْ يَجِئْ فِي كَلَاَْمِهِمْ إِلَّا نَظِيْرُهُ مِنْ غَيْرِ بَاْبِهِ</مقطع>
  <مقطع هوية='٠١١٨٠'>وَهُوَ الَّذِي يُسَمِّيْهِ النَّحْوِيُّوْنَ التَّصرِيْفَ وَالْفِعْلَ</مقطع>

  <مقطع هوية='٤٧٤١١'>أَمَّا مَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ مِنْ غَيْرِ الْأَفْعَاْلِ</مقطع>
  <مقطع هوية='٤٩٥٣١'>فَإِنَّهُ يَكُوْنُ <مثال>فَعْلًا</مثال></مقطع>
  <مقطع هوية='٥٩٢٣٩'>وَيَكُوْنُ فِي الْأَسْمَاْءِ وَالصِّفَاْتِ</مقطع>
  <مقطع هوية='٣٢٤٥٢'>فَالْأَسْمَاْءُ مِثْلُ <اسم>صَقْرٍ</اسم> وَ<اسم>فَهْدٍ</اسم> وَ<اسم>كَلْبٍ</اسم></مقطع>
  <مقطع هوية='٩١٥٦٣'>وَاْلصِّفَةُ نَحْوُ <صفة>صَعْبٍ</صفة> وَ<صفة>ضَخْمٍ</صفة> وَ<صفة>خَدْلٍ</صفة></مقطع>

  <مقطع هوية='٧٥١٢٦'>وَيَكُوْنُ <مثال>فِعْلًا</مثال> فِي الْأَسْمَاْءِ وَالصِّفَةِ</مقطع>
  <مقطع هوية='٠٧٩١٥'>فَالْأَسْمَاْءُ نَحْوُ الْـ<اسم>عِكْمِ</اسم> وَالْـ<اسم>جِذْعُِ</اسم> وَالْـ<اسم>عِذْقِ</اسم>
  وَالصِّفَاْتُ نَحْوُ <اسم>نِقْضٍ</اسم> وَ<اسم>جِلْفٍ</اسم> وَ<اسم>نِضْوٍ</اسم> و<اسم>هِرْطٍ</اسم> وَ<اسم>صَنْعٍ</اسم>
  </مقطع>

  <مقطع هوية='٤١٢٠٥'>
  وَيَكُوْنُ <مثال>فُعْلًا</مثال> فِي الْأَسْمَاْءِ وَالصِفَةِ</مقطع>
  <مقطع هوية='٣٥٥٩٠'>فَالْأَسْمَاْءُ نَحْوُ الْـ<اسم>بُرْدِ</اسم> وَالْـ<اسم>قُرْطِ</اسم> وَالْـ<اسم>حُرْضِ</اسم></مقطع>
  <مقطع هوية='٦٦٢٣٦'>وَأَمَّا الصِّفَاْتُ فَنَحوُ الْـ<صفة>عُبْرِ</صفة></مقطع>
  <مقطع هوية='٠٧٨٦٤'>يُقَاْلُ <حرف>نَاْقَةٌ عُبْرُ أَسْفَاْرٍ</حرف></مقطع>
  <مقطع هوية='٧٤٣٨٥'>وَيُقَاْلُ <حرف>رَجُلٌ جُدٌّ</حرف> أَيْ ذُو جِدٍّ</مقطع>
  <مقطع هوية='٢٠١٩٧'>وَالْـ<اسم>مُرُّ</اسم> وَالْـ<اسم>حُلْوُ</اسم></مقطع>

  <مقطع هوية='٩٤٦٦٤'>وَيَكُوْنُ <مثال>فَعَلًا</مثال> فِي الِاْسْمِ وَالصِّفَةِ</مقطع>
  <مقطع هوية='٨١٥٤١'>فَالْاِْسْمُ نَحْوُ <اسم>جَبَلٍ</اسم> وَ<اسم>جَمَلٍ</اسم> وَ<اسم>حَمَلٍ</اسم></مقطع>
  <مقطع هوية='٧٠٩٦٨'>وَاْلصِّفَةُ نَحْوُ <صفة>حَدَثٍ</صفة> وَ<صفة>بَطَلٍ</صفة> وَ<صفة>عَزَبٍ</صفة> وَ<صفة>وَقَلٍ</صفة></مقطع>

  <مقطع هوية='٧٨٨٩٠'>وَيَكُوْنُ <مثال>فَعِلًا</مثال> فِيْهِمَا</مقطع>
  <مقطع هوية='٩١٤٨٩'>فَالْأَسْمَاْءُ نَحْوُ <اسم>كَتِفٍ</اسم> وَ<اسم>كَبِدٍ</اسم> وَ<اسم>فَخِذٍ</اسم></مقطع>
  <مقطع هوية='٦١٩٦٠'>وَاْلصِّفَاْتُ نَحْوُ <صفة>حَذِرٍ</صفة> وَ<صفة>وَجِعٍ</صفة> وَ<صفة>حَصِرٍ</صفة></مقطع>

  <مقطع هوية='٧٥٩٣٧'>وَيَكُوْنُ <مثال>فَعُلًا</مثال> فِيْهِمَا</مقطع>
  <مقطع هوية='٨٢٩٢٩'>فَالْأَسْمَاْءُ نَحْوُ <اسم>رَجُلٍ</اسم> وَ<اسم>سَبُعٍ</اسم> وَ<اسم>عَضُدٍ</اسم> وَ<اسم>ضَبُعٍ</اسم></مقطع>
  <مقطع هوية='٧٦٢٢٦'>وَاْلصِّفَةُ نَحْوُ <صفة>حَدُثٍ</صفة> وَ<صفة>حَذُرٍ</صفة> وَ<صفة>خَلُطٍ</صفة> و<صفة>نَدُسٍ</صفة></مقطع>

  <مقطع هوية='٥٣٥٧٣'>وَيَكُوْنُ <مثال>فُعَلًا</مثال> فِيْهِمَا</مقطع>
  <مقطع هوية='٥٥٢٧٧'>فَالأَسْمَاْءُ نَحْوُ <اسم>صُرَدٍ</اسم> و<اسم>نُغَرٍ</اسم> وَ<اسم>رُبَعٍ</اسم></مقطع>
  <مقطع هوية='١٩٤٩٦'>وَاْلصِّفَةُ نَحْوُ <صفة>حُطَمٍ</صفة> وَ<صفة>لُبَدٍ</صفة></مقطع>
  <مقطع هوية='٦٧٢٧٧'>قَاْلَ اللهُ عَزَّ وَجَلَّ <آية هوية='٠٤٥٣٨'>أَهَلَكَتْ مَاْلَا لُبَدًا</آية></مقطع>
  <مقطع هوية='٨٥٧٥٤'>وَرَجُلٌ <صفة>خُتَعٌ</صفة> و<صفة>سُكَعٌ</صفة></مقطع>

  <مقطع هوية='٦٤٠٠٢'>
    وَيَكُوْنُ <مثال>فُعُلًا</مثال> فِيْهِمَاْ
  </مقطع>
  <مقطع هوية='٥٢١٥٤'>فَالِاْسْمُ الـ<اسم>طُّنُبُ</اسم> وَالْـ<اسم>عُنُقُ</اسم> وَالْـ<اسم>عُضُدُ</اسم> وَالْـ<اسم>جُمُدُ</اسم></مقطع>
   
  <مقطع هوية='٠٦٠٧٧'>وَاْلصِّفَةُ الْـ<صفة>جُنُبُ</صفة> واْلْـ<صفة>أُجُدُ</صفة> وَ<صفة>نُضُدٌ</صفة> وَ<صفة>نُكُرٌ</صفة></مقطع>
  <مقطع هوية='٨٢٣٦٤'>قَاْلَ سُبْحَاْنَهُ <آية هوية='٠٢٨٨٥'>إِلَى شَيْءٍ نُكْرٍ</آية></مقطع>
  <مقطع هوية='٦٨٨٧٥'>وَالْـ<صفة>أُنُفُ</صفة> واْلـ<صفة>سُجُحُ</صفة></مقطع>
  <مقطع هوية='٣١٢٣١'>قَاْلَ</مقطع>
  <شاهدة هوية='٧٤٠٧٧'>
    <بيت>
      <مصراع>[ذَرُوْا التخاْجُؤَ واْمشَوْاْ] مِشْيَةً سُجُحًا</مصراع>
      <مصراع>[إَنّ الرجاْل ذوْو عَصْبْ وتذكيْر]</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٨٢٣٣٢'>
    وَيَكُوْنُ <مثال>فِعَلًا</مثال> فِيْهِمَاْ
  </مقطع>
  <مقطع هوية='٢٤٧٤٩'>فَالْأَسْمَاْءُ نَحْوُ الـضِّلَعِ وَالْـعِوَضِ وَالـصِّغَرِ وَالْـعِنَبِ</مقطع>
  <مقطع هوية='٢٦٥٤٦'>وَلَا نَعْلَمُهُ جَاْءَ صَفَةً إِلَّا فِي حَرْفٍ مِنَ الْمُعْتَلِّ يُوْصَفُ بِهِ الْجِمَاْعُ</مقطع>
  <مقطع هوية='٨٤٦٩٠'>وَذٰلِكَ قَوْلُهُمْ <قول هوية='٩٤٥٩٦'>قَوْمٌ عِدًى</قول></مقطع>
  <مقطع هوية='٣٥٦١١'>وَلَمْ يُكَسَّرْ عَلَى <حرف>عِدًى</حرف> وَاحِدٌ</مقطع>
  <مقطع هوية='٦٧٣١١'>وَلَكِنَّهُ بِمَنْزِلَةِ الـ<حرف>سَّفْرِ</حرف> وَالـ<حرف>رَّكْبِ</حرف></مقطع>

  <مقطع هوية='٤٦٩٠٢'>وَيَكُوْنُ <مثال>فِعِلًا</مثال> فِي الِاْسْمِ نَحْوُ <اسم>إِبِلٍ</اسم> وَهُوَ قَلِيْلٌ</مقطع>
  <مقطع هوية='١٧٥٤٤'>لَا نَعْلَمُ فِي الْأَسْمَاْءِ وَالصِّفَاْتِ غَيْرَهُ</مقطع>

  <مقطع هوية='٣٢٩١٨'>وَاْعْلَمْ أَنَّهُ لَيْسَ فِي الْأَسْمَاْءِ وَالصِّفَاْتِ <مثال>فُعِلٌ</مثال></مقطع>
  <مقطع هوية='٣٨٦١٨'>وَلَا يَكُوْنُ إِلَّا فِي الْفِعْلِ وَلَيْسَ فِي الْكَلَاَْمِ <مثال>فِعُلٌ</مثال></مقطع>

