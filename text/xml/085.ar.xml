<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٨٧"
     درنبورج="١-١٥٧"
     البكاء="١-٤٧٤"
     هارون="١-٣٧٣"
     يعقوب="١-٤٤٢"
     رقم="٨٥">

  <عنوان>
    <مقطع هوية='٥٧٢٤٤'>هٰذَا بَاْبُ مَا جُعِلَ مِنَ الْأَسْمَاْءِ مَصْدَرًا كَاْلْمُضَاْفِ فِي الْبَاْبِ الَّذِي يَلِيْهِ</مقطع>
  </عنوان>
  <مقطع هوية='١٤٣٩٢'>وَذٰلِكَ قَوْلُكَ <قول هوية='٦٤٤٣٦'>مَرَرْتُ بِهِ وَحْدَهُ</قول>
  </مقطع>
  <مقطع هوية='٩٣٥٦٦'>وَ<قول هوية='٠٧٥٣٠'>مَرَرْتُ بِهِمْ وَحْدَهُمْ</قول>
  </مقطع>
  <مقطع هوية='٩٤٣٣٦'>وَ<قول هوية='٩٩٨٤٧'>مَرَرْتُ بِرَجُلٍ وَحْدَهُ</قول>
  </مقطع>
  <مقطع هوية='٣٦٥٤٣'>وَمِثْلُ ذٰلِكَ فِي لُغَةِ أَهْلِ الْحِجَاْزِ</مقطع>
  <مقطع هوية='٦٨٤٣٣'>
    <قول هوية='٥٣٦٢٣'>مَرَرْتُ بِهِمْ ثَلَاْثَتَهُمْ</قول> وَ<حرف>أَرْبَعَتَهُمْ</حرف>
    <!-- وَ<قول هوية='٢١٩٣٧'><تقديْر>مَرَرْتُ بِهِمْ</تقديْر> أَرْبَعَتَهُمْ</قول> -->
  </مقطع>
  <مقطع هوية='٤٥٤٩٤'>وَكَذٰلِكَ أِلَى العَشَرَةِ</مقطع>
  <مقطع هوية='٦٥٧١٧'>وَزَعَمَ الْخَلِيْلُ رَحَمَهُ اللهُ أَنَّهُ إِذَا نَصَبَ <حرف>ثَلَاْثَتَهُمْ</حرف> فَكَأَنَّهُ يَقُوْلُ</مقطع>
  <مقطع هوية='١٨٧١٩'><قول هوية='٦٣٤٣٤'>مَرَرْتُ بِهٰؤُلَاْءِ فَقَطْ لَمْ أُجَاْوِزْ هٰؤُلَاْءِ</قول>
  </مقطع>
  <مقطع هوية='٠١٦٥٤'>كَمَا أَنَّهُ إِذَا قَاْلَ <حرف>وَحْدَهُ</حرف> فَإِنَّمَا يُرِيْدُ</مقطع>
  <مقطع هوية='٥٦٠٣٦'><قول هوية='٣٨٦١٣'>مَرَرْتُ بِهِ فَقَطْ لَمْ أُجَاْوِزْهُ</قول>
  </مقطع>
  <مقطع هوية='٢٤٨٦٢'>وَأَمَّا بَنُو تَمِيْمٍ فِيُجْرُوْنَهُ عَلَى الِاْسْمِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٢٨٩٩٨'>إِنْ كَاْنَ جَرًّا فَجَرًّا</مقطع>
  <مقطع هوية='٧٤٤٦٦'>وَإِنْ كَاْنَ نَصْبًا فَنَصْبًا</مقطع>
  <مقطع هوية='٩٩٧٠٣'>وَإِنْ كَاْنَ رَفْعًا فَرَفْعًا</مقطع>
  <مقطع هوية='٠٨٣٦٦'>وَزَعَمَ الْخَلِيْلُ أَنَّ الَّذِيْنَ يُجْرُوْنَهُ</مقطع>
  <مقطع هوية='١٤٦٧٧'>فَكَأَنَّهُمْ يُرِيْدُوْنَ أَنْ يَعُمُّوْا كَقَوْلِكَ</مقطع>
  <مقطع هوية='١١٧٥٥'><قول هوية='٢٥٩٨٩'>مَرَرْتُ بِهِمْ كُلِّهِمْ</قول>
  </مقطع>
  <مقطع هوية='٩١٩٨٣'>أَيْ لَمْ أَدَعْ مِنْهُمْ أَحَدًا</مقطع>
  <مقطع هوية='٣٩٠٥٩'>وَزَعَمَ الْخَلِيْلُ رَحَمَهُ اللهُ حَيْثُ مَثَّلَ نَصْبَ <حرف>وَحْدَهُ</حرف> وَ<حرف>خَمْسَتَهُمْ</حرف>
  </مقطع>
  <مقطع هوية='٩٢٢٨٤'>أَنَّهُ كَقَوْلِكَ <قول هوية='٩١٠٦٦'>أَفْرَدْتُهُمْ إِفْرَاْدًا</قول>
  </مقطع>
  <مقطع هوية='٣١٩٢٢'>فهٰذَا تَمْثِيْلٌ وَلٰكِنَّهُ لَمْ يُسْتَعْمَلْ فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٧٣٥٦٧'>وَمِثْلُ <حرف>خَمْسَتَهُمْ</حرف> قَوْلُ الشَّمَّاْخِ</مقطع>

  <شاهدة هوية='٦٠٧٢٠'>
    <بيت>
      <مصراع>أَتَتْنِي سُلَيْمٌ قَضَّهَا بِقَضِيْضِهَا</مصراع>
      <مصراع>تُمَسِّحُ حَوْلِي بِاْلبَقِيْعِ سِبَاْلَهَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٠٣٧١٠'>كَأَنَّهُ قَاْلَ <حرف>انْقِضَاْضَهُمْ</حرف> أَيْ <حرف>انْقِضَاْضًا</حرف>
  </مقطع>
  <مقطع هوية='٧٣٠٤٨'>وَ<قول هوية='٠٨٥٧٨'>مَرَرْتُ بِهمْ قَضَّهُمْ بِقَضِيْضِهِمْ</قول>
  </مقطع>
   
  <مقطع هوية='٧٦٢٢٦'>كَأَنَّهُ يَقُوْلُ <قول هوية='١١٧٢٦'>مَرَرْتُ بِهِمْ انقضَاْضًا</قول>
  </مقطع>
  <مقطع هوية='١٨٩٥٩'>فهٰذَا تَمْثِيْلٌ وَإِنْ لَمْ يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية='١١١٤٤'>كَمَا كَاْنَ <حرف>إِفْرَاْدًا</حرف> تَمْثِيْلًا</مقطع>
  <مقطع هوية='٧١٠١٧'>وَإِنَّمَا ذَكَرَْنا الإِفْرَاْدَ فِي <حرف>وَحْدَهُ</حرف> وَالِاْنْقِضَاْضَ فِي <حرف>قَضَّهُمْ</حرف>
  </مقطع>
  <مقطع هوية='٩٥٠٥٨'>لِأَنَّهُ إِذَا قَاْلَ <حرف>قَضَّهُمْ</حرف> فَهُوَ مُشْتَقٌّ مِنْ مَعْنَى الِاْنْقِضَاْضِ</مقطع>
  <مقطع هوية='١٧٧٠١'>لِأَنَّهُ كَأَنَّهُ يَقُوْلُ <قول هوية='٨٤٦٣١'>انْقَضَّ آخِرُهُمْ عَلَى أَوَّلِهِمْ</قول>
  </مقطع>
  <مقطع هوية='٣٢٥٩١'>وَكَذٰلِكَ <حرف>وَحْدَهُ</حرف> إِنَّمَا هُوَ مِنْ مَعْنَى التَّفَرُّدِ</مقطع>
  <مقطع هوية='١٨٩٦٨'>فكَذٰلِكَ أَيْضًا يَكُوْنُ <حرف>خَمْسَتَهُمْ</حرف> نَصْبًا إِذَا أَرَدْتَ مَعْنَى الِاْنْفِرَاْدِ</مقطع>
  <مقطع هوية='٧٨٠١٠'>فَإِنْ أَرَدْتَ أَنَّكَ لَمْ تَدَعْ مِنْهُمْ أَحَدًا</مقطع>
  <مقطع هوية='٩٢١٣٢'>جَرَرْتَ كَمَا كَاْنَ ذٰلِكَ فِي <حرف>قَضَّهُمْ</حرف>
  </مقطع>
  <مقطع هوية='٠٢٧٦٣'>وَبَعْضُ الْعَرَبِ يَجْعَلُ <حرف>قَضَّهُمْ</حرف> بِمَنْزِلَةِ <حرف>كُلَّهم</حرف>
  </مقطع>
  <مقطع هوية='٤١٣٦١'>يُجْرِيْهِ عَلَى الْوُجُوْهِ</مقطع>

