<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٧"
     درنبورج="١-٧٩"
     البكاء="١-٢٦٢"
     هارون="١-١٨٩"
     يعقوب="١-٢٤٩"
     رقم="٤٠">

  <عنوان>
    <مقطع هوية='٧١٦٠٩'>هٰذَا بَاْبٌ مِنَ الْمَصَاْدِرِ جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ في عَمَلِهِ وَمَعْنَاْهُ</مقطع>
  </عنوان>
  <مقطع هوية='٩١٢٩٥'>وَذٰلِكَ قَوْلُكَ <قول هوية='٥٦١١٠'>عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٤٦٧١٥'>فَمَعْنَاْهُ أَنَّهُ يَضْرِبُ زَيْدًا</مقطع>
  <مقطع هوية='٩٦٦٧١'>وَتَقُوْلُ <قول هوية='٩٧٤٤٢'>عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا بَكْرٌ</قول>
  </مقطع>
  <مقطع هوية='٤٣٤٦٨'>وَ<قول هوية='٣١٥٢٠'>مِنْ ضَرْبٍ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٦٠٣٣٦'>إِذَا كَاْنَ هُوَ الْفَاْعِلُ</مقطع>
  <مقطع هوية='١٦٤٥٢'>كَأَنَّهُ قَاْلَ <قول هوية='٦٢٨٦٤'>عَجِبْتُ مِنْ أَنَّهُ يَضْرِبُ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٦٦٥٥٠'>وَ<قول هوية='٤٦٤٤١'>
  <تقدير>عَجِبْتُ مِنْ أَنَّهُ</تقدير> يَضْرِبُ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٤٣٧٧٧'>وَإِنَّمَا خَاْلَفَ هٰذَا الِاسْمَ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ</مقطع>
  <مقطع هوية='٨٥٥٦٧'>في أَنَّ فِيْهِ فَاْعِلًا وَمَفْعُوْلًا</مقطع>
  <مقطع هوية='٢٨٧١٣'>لِأَنَّكَ إِذَا قُلْتَ <قول هوية='١٥٩٨٥'>هٰذَا ضَاْرِبٌ</قول>
  </مقطع>
  <مقطع هوية='١٧٥٢٩'>فَقَدْ جِئْتَ بِالْفَاْعِلِ وَذَكَرْتَهُ</مقطع>
  <مقطع هوية='٤٤٠٥٥'>وَإِذَا قُلْتَ <قول هوية='٢٨٦٣٣'>عَجِبْتُ مِنْ ضَرْبٍ</قول>
  </مقطع>
  <مقطع هوية='٧٥٠٩٧'>فَإِنَّكَ لَمْ تَذْكُرْ الْفَاْعِلَ</مقطع>
  <مقطع هوية='١٢٥٤٤'>فَالْمَصْدَرُ لَيْسَ بِالْفَاْعِلِ</مقطع>
  <مقطع هوية='٠٧٩١٧'>وَإِنْ كَاْنَ فِيْهِ دَلِيْلٌ عَلَى الْفَاْعِلِ</مقطع>
  <مقطع هوية='٥٦٢٩٦'>فَلِذٰلِكَ احْتَجْتَ فِيْهِ إِلَى فَاْعِلٍ وَمَفْعُوْلٍ</مقطع>
  <مقطع هوية='٨٣٩٣٩'>وَلَمْ تَحْتَجْ حِيْنَ قُلْتَ <قول هوية='٠١٣٥٨'>هٰذَا ضَاْربٌ زَيْدًا</قول> إِلَى فَاْعِلٍ ظَاْهِرٍ</مقطع>
  <مقطع هوية='٥١٦٩٨'>لِأَنَّ الْمُضْمَرَ في <حرف>ضَاْرِبٍ</حرف> هُوَ الْفَاْعِلُ</مقطع>
  <مقطع هوية='٥٠٢٤٨'>فَمِمَّا جَاءَ مِنْ هٰذَا قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='٨٦٥٣٩'>
    <آية هوية='٣٣٤٠٤' سورة="١١" آية="١٤-١٥">أَوْ إِطْعَامٌ فِي يَوْمٍ ذِي مَسْغَبَةٍ ۝ يَتِيْمًا ذَا مَقْرَبَةٍ</آية>
  </مقطع>
  <مقطع هوية='٧٥٦٨٠'>وَقَالَ</مقطع>
  <شاهدة هوية='١٤١٨٠'>
    <بيت>
      <مصراع>فَلَوْلَا رَجَاءُ النَّصْرِ مِنْكَ وَرَهْبَةٌ</مصراع>
      <مصراع>عِقَاْبَكَ قَدْ صَاْرُوْا لَنَا كَالْمَوَاْرِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٥٦٠٩'>وَ قَالَ</مقطع>
  <شاهدة هوية='٩٠٧٣٠'>
    <بيت>
      <مصراع>أَخَذْتُ بِسَجْلِهِمْ فَنَفَحْتُ فِيْهِ</مصراع>
      <مصراع>مُحَاْفَظَةً لَهُنَّ إِخَا الذِّمَاْمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٨٨٣٦'>وَقَالَ</مقطع>
  <شاهدة هوية='٨٨٥٩٢'>
    <بيت>
      <مصراع>بِضَرْبٍ بِالسُّيُوْفِ رُءُوْسَ قَوْمٍ</مصراع>
      <مصراع>أَزَلْنَا هَامَهُنَّ عَنِ الْمَقِيْلِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٤٦٠٤'>وَإِنْ شِئْتَ حَذَفْتَ التَّنْوِيْنَ كَمَا حَذَفْتَ في الْفَاْعِلِ</مقطع>
  <مقطع هوية='٨٨٢٢١'>وَكَاْنَ الْمَعْنَى عَلَى حَاْلِهِ</مقطع>
  <مقطع هوية='٤١٩٨٤'>إِلَّا أَنَّكَ تَجُرُّ الَّذِي يَلِي الْمَصْدَرَ</مقطع>
  <مقطع هوية='٣٨٢٢٠'>فَاْعِلًا كَاْنَ أَوْ مَفْعُوْلًا</مقطع>
  <مقطع هوية='٧٤١٩٦'>لِأَنَّهُ اسْمٌ قَدْ كَفَفْتَ عَنْهُ التَّنْوِيْنَ</مقطع>
  <مقطع هوية='٣٠٣٨٠'>كَمَا فَعَلْتَ ذٰلِكَ بِفَاْعِلٍ</مقطع>
  <مقطع هوية='٣٤١٧٥'>وَيَصِيْرُ الْمَجْرُوْرُ بَدَلًا مِنَ التَّنْوِيْنِ مُعَاقِبًا لَهُ</مقطع>
  <مقطع هوية='٠٠٢٥٦'>وَذٰلِكَ قَوْلُكَ <قول هوية='٠١٠٦٥'>عَجَبِتُ مِنْ ضَرْبِهِ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٥٢٩٥٤'>إِنْ كَاْنَ فَاْعِلًا</مقطع>
  <مقطع هوية='٩٣٢٨٩'>وَ<قول هوية='٩٩٩٥٢'>
  <تقدير>عَجَبِتُ</تقدير> مِنْ ضَرْبِهِ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٣٧٠٩٤'>إِنْ كَانَ الْمُضْمَرُ مَفْعُوْلًا</مقطع>
  <مقطع هوية='٤٥٥٥٨'>وَتَقُوْلُ <قول هوية='٢٨٥٤٦'>عَجِبْتُ مِنْ كِسْوَةٍ زَيْدٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع هوية='٦١٩٢٩'>وَ<قول هوية='٣٩٧٢٦'>عَجِبْتُ مِنْ كِسْوَةِ زَيْدٍ أَبَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٥٧٩٩٣'>إِذَا حَذَفْتَ التَّنْوِيْنَ</مقطع>
  <مقطع هوية='٧٨٨٥٥'>وَمِمَّا جَاءَ لَا يُنَوَّنُ قُوْلُ لَبِيْدٍ</مقطع>
  <شاهدة هوية='٧٦٥٨٤'>
    <بيت>
      <مصراع>عَهْدِى بِهَا الْحَيَّ الْجَمِيْعَ وَفِيْهِمُ</مصراع>
      <مصراع>قَبْلَ التَّفَرُّقِ مَيْسِرٌ وَنِدَاْمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٩١٦٨'>وَمِنْهُ قَوْلُهُمْ <قول هوية='٤٥٤٧٦'>سَمْعُ أُذُنِي زَيْدًا يَقُوْلُ ذَاكَ</قول>
  </مقطع>
  <مقطع هوية='٢٠٠٠٩'>قَالَ رُؤْبَةُ</مقطع>
  <شاهدة هوية='٢٦٢٧٣'>
    <بيت>
      <مصراع>وَرَأْىُ عَيْنَيَّ الْفَتَى أَخَاكَا</مصراع>
      <مصراع>يُعْطِي الْجَزِيْلَ فَعَلَيْكَ ذَاكَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٠٩٤٧'>وَتَقُوْلُ <قول هوية='٢٣٩٤٠'>عَجِبْتُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٥١٢٥٩'>إِذَا أَشْرَكْتَ بَيْنَهُمَا</مقطع>
  <مقطع هوية='٧٦٤٨١'>كَمَا فَعَلْتَ ذٰلِكَ في الْفَاْعِلِ</مقطع>
  <مقطع هوية='٩٩٥٩٦'>وَمَنْ قَاْلَ <قول هوية='٠٩٤٣٤'>هَذا ضَارِبُ زَيْدٍ وَعَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٣٢٣٠١'>قَاْلَ <قول هوية='٧٦٥٤٨'>عَجِبْتُ لَهُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٠٤٢٦٢'>كَأَنَّهُ أَضْمَرَ <حرف>وَيَضْرِبُ عَمْرًا</حرف> أَوْ <حرف>وَضَرَبَ عَمْرًا</حرف>
  </مقطع>
  <مقطع هوية='٧٨٩٦٨'>قَالَ رُؤْبَةُ</مقطع>
  <شاهدة هوية='٥٨١٦٨'>
    <بيت>
      <مصراع>قَدْ كُنْتُ دَاْيَنْتُ بِهَا حَسَّاْنًا</مصراع>
      <مصراع>مَخَاْفَةَ الْإِفْلَاسِ وَاللَّيَانَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>يُحْسِنُ بَيْعَ الْأَصْلِ وَالَقْيَانَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٢١٩٥'>وَتَقُوْلُ <قول هوية='٥٠٩٦١'>عَجِبْتُ مِنَ الضَّرْبِ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٩٧٨٦٠'>كَمَا قُلْتَ <قول هوية='٩١٠٧٣'>عَجِبْتُ مِنَ الضَّاْرِبِ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠١٩٩٧'>يَكُوْنُ الْأَلِفُ وَاللَّامُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٨٢٣٥٧'>وَقَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة هوية='٠٦٥٨٣'>
    <بيت>
      <مصراع>ضَعِيْفُ النِّكَاْيَةِ أَعْدَاْءَهُ</مصراع>
      <مصراع>يَخَاْلُ الْفِرَاْرَ يُرَاْخِي الْأَجَلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١١٨٠٢'>وَقَاْلَ الْمَرَّاْرُ الْأَسَدِيِّ</مقطع>
  <شاهدة هوية='٢٧٣١٦'>
    <بيت>
      <مصراع>لَقَدْ عَلِمَتْ أُوْلَى الْمُغِيْرَةِ أَنَّنِي</مصراع>
      <مصراع>لَحِقْتُ فَلَمْ أَنْكُلْ عَنْ الضَّرْبِ مِسْمَعَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٧٣٤٧'>وَمَنْ قَاْلَ <قول هوية='٤٦٠٥١'>هٰذَا الضَّاْرِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع هوية='٥١٩٩٦'>لَمْ يَقُلْ <قول هوية='٨٢١٣٦'>عَجِبْتُ لَهُ مِنَ الضَّرْبِ الرِّجْلِ</قول>
  </مقطع>
  <مقطع هوية='٣٦٨٧٠'>لِأَنَّ <حرف>الضَّارِبَ الرَّجُلِ</حرف>
  </مقطع>
  <مقطع هوية='٤٢٦١١'>مُشَبَّهٌ بِـ<حرف>الْحَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع هوية='١٦٨٤٣'>لِأَنَّهُ وَصْفٌ لِلْاِسْمِ</مقطع>
  <مقطع هوية='٢٠٢٧٠'>كَمَا أَنَّ <حرف>الْحَسَنَ</حرف> وَصْفٌ</مقطع>
  <مقطع هوية='٠٨٥٦٤'>وَلَيْسَ هُوَ بِحَدِّ الْكَلَامِ مَعَ ذٰلِكَ</مقطع>
  <مقطع هوية='٧٥٦٤٥'>وَقَدْ يَنْبَغِي في قِيَاْسِ مَنْ قَالَ <حرف>الضَّارِبُ الرَّجُلِ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٠٣١'>أَنْ يَقُوْلَ <حرف>الضَّاْرِبُ أَخِي الرَّجُلِ</حرف>
  </مقطع>
  <مقطع هوية='٦٧٩٦٣'>كَمَا يَقُوْلُ <حرف>الْحَسَنُ الْأَخِ</حرف> وَ<حرف>الْحَسَنُ وَجْهِ الْأَخِ</حرف>
  </مقطع>
  <مقطع هوية='٦٩١٥٥'>وَكَاْنَ الْخَلِيْلُ يَرَاْهُ</مقطع>
  <مقطع هوية='٥١٥٢٢'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='٥٤٦١٧'>هٰذَا ضَرْبُ عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع هوية='٦٠١٥٨'>كَمَا تَقُوْلُ <قول هوية='٥٢٤٢٠'>هٰذَا ضَاْرِبُ عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع هوية='١٩٩٦٠'>فِيْمَا انْقَطَعَ مِنْ الْأَفْعَالِ</مقطع>
  <مقطع هوية='٧٤٤٢٤'>وَتَقُوْلُ <قول هوية='١٢٠٦٣'>عَجِبْتُ مِنْ ضَرْبِ الْيَوْمِ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٤٧٤١٩'>كَمَا قَالَ</مقطع>
  <شاهدة هوية='٧٦٥٧٤'>
    <بيت>
      <مصراع>يَا سَارِقَ الْلَّيْلَةِ أَهْلَ الْدَّارْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩١٤٨١'>وَلَيْسَ مِثْلَ</مقطع>
  <شاهدة هوية='١٥٦٥٠'>
    <بيت>
      <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٥٥٠٦'>لِأَنَّهُمْ لَمْ يَجْعَلُوْهُ <حرف>فِعْلًا</حرف> أَوْ <حرف>فَعَلَ شَيْئًا في الْيَوْمِ</حرف>
  </مقطع>
  <مقطع هوية='٦٤٤٣٦'>إِنَّمَا هُوَ بِمَنْزِلَةِ <حرف>لِلَّهِ بِلَادُكَ</حرف>
  </مقطع>
