 يعقوب="١-٢٤٩"
 رقم="٤٠">
 <عنوان>
 <مقطع رقم="١">هٰذَا بَابٌ مِنَ الْمَصَادِرِ جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ في عَمَلِهِ وَمَعْنَاهُ</مقطع>
 </عنوان>
 <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ <قول رقم="١">عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا</قول>
 </مقطع>
 <مقطع رقم="٣">فَمَعْنَاهُ أَنَّهُ يَضْرِبُ زَيْدًا</مقطع>
 <مقطع رقم="٤">وَتَقُوْلُ <قول رقم="٢">عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا بَكْرٌ</قول>
 </مقطع>
 <مقطع رقم="٥">وَ<قول رقم="٣">مِنْ ضَرْبٍ زَيْدٌ عَمْرًا</قول>
 </مقطع>
 <مقطع رقم="٦">إِذَا كَانَ هُوَ الْفَاعِلُ</مقطع>
 <مقطع رقم="٧">كَأَنَّهُ قَالَ <قول رقم="٤">عَجِبْتُ مِنْ أَنَّهُ يَضْرِبُ زَيْدٌ عَمْرًا</قول>
 </مقطع>
 <مقطع رقم="٨">وَ<قول رقم="٥">يَضْرِبُ عَمْرًا زَيْدٌ</قول>
 </مقطع>
 <مقطع رقم="٩">وَإِنَّمَا خَالَفَ هٰذَا الِاسْمَ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ</مقطع>
 <مقطع رقم="١٠">في أَنَّ فِيْهِ فَاعِلًا وَمَفْعُوْلًا</مقطع>
 <مقطع رقم="١١">لِأَنَّكَ إِذَا قُلْتَ <قول رقم="٦">هٰذَا ضَارِبٌ</قول>
 </مقطع>
 <مقطع رقم="١٢">فَقَدْ جِئْتَ بِالْفَاعِلِ وَذَكَرْتَهُ</مقطع>
 <مقطع رقم="١٣">وَإِذَا قُلْتَ <قول رقم="٧">عَجِبْتُ مِنْ ضَرْبٍ</قول>
 </مقطع>
 <مقطع رقم="١٤">فَإِنَّكَ لَمْ تَذْكُرْ الْفَاعِلَ</مقطع>
 <مقطع رقم="١٥">فَالْمَصْدَرُ لَيْسَ بِالْفَاعِلِ</مقطع>
 <مقطع رقم="١٦">وَإِنْ كَانَ فِيْهِ دَلِيْلٌ عَلَى الْفَاعِلِ</مقطع>
 <مقطع رقم="١٧">فَلِذٰلِكَ احْتَجْتَ فِيْهِ إِلَى فَاعِلٍ وَمَفْعُوْلٍ</مقطع>
 <مقطع رقم="١٨">وَلَمْ تَحْتَجْ حِيْنَ قُلْتَ <قول رقم="٨">هٰذَا ضَاربٌ زَيْدًا</قول> إِلَى فَاعِلٍ ظَاهِرٍ</مقطع>
 <مقطع رقم="١٩">لِأَنَّ الْمُضْمَرَ في <حرف>ضَارِبٍ</حرف> هُوَ الْفَاعِلُ</مقطع>
 <مقطع رقم="٢٠">فَمِمَّا جَاءَ مِنْ هٰذَا قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
 <مقطع رقم="٢١">
 <آية سورة="١١" آية="١٤-١٥">أَوْ إِطْعَامٌ فِي يَوْمٍ ذِيْ مَسْغَبَةٍ يَتِيْمًا ذَا مَقْرَبَةٍ</آية>
 </مقطع>
 <مقطع رقم="٢٢">وَقَالَ</مقطع>
 <شاهدة مقطع="٢٣" رقم="١">
 <بيت>
 <مصراع>فَلَوْلا رَجَاءٌ الْنَّصْرُ مِنْكَ وَرَهْبَةً</مصراع>
 <مصراع>عِقَابِكَ قَدْ صَارُوْا لَنَا كَالْمَوَارٍ دَ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٢٤">وَ قَالَ</مقطع>
 <شاهدة مقطع="٢٥" رقم="٢">
 <بيت>
 <مصراع>أَخَذْتُ بِسجَلَهُمْ فنَفَحتُ فِيْهِ</مصراع>
 <مصراع>مُحَافَظَةً لَهُنَّ إِخّا الْذِّمَامِ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٢٦">وَقَالَ</مقطع>
 <شاهدة مقطع="٢٧" رقم="٣">
 <بيت>
 <مصراع>بِضَرْبٍ بِالسُّيُوْفِ رُءُوْسَ قَوْمٍ</مصراع>
 <مصراع>أَزَلْنَا هَامَهُنَّ عَنِ الْمَقِيْلِ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٢٨">وَإِنْ شِئْتَ حَذَفْتَ التَّنْوِينَ كَمَا حَذَفْتَ في الْفَاعِلِ</مقطع>
 <مقطع رقم="٢٩">وَكَانَ الْمَعْنَى عَلَى حَالِهِ</مقطع>
 <مقطع رقم="٣٠">إِلَّا أَنَّكَ تَجُرُّ الَّذِي يَلِي الْمَصْدَرَ</مقطع>
 <مقطع رقم="٣١">فَاعِلًا كَانَ أَوْ مَفْعُوْلًا</مقطع>
 <مقطع رقم="٣٢">لِأَنَّهُ اسْمٌ قَدْ كَفَفْتَ عَنْهُ التَّنْوِيْنَ</مقطع>
 <مقطع رقم="٣٣">كَمَا فَعَلْتَ ذٰلِكَ بِفَاعِلٍ</مقطع>
 <مقطع رقم="٣٤">وَيَصِيْرُ الْمَجْرُوْرُ بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
 <مقطع رقم="٣٥">مُعَاقِبًا لَهُ</مقطع>
 <مقطع رقم="٣٦">وَذٰلِكَ قَوْلُكَ <قول رقم="٩">عَجَبِتُ مِنْ ضَرْبِهِ زَيْدًا</قول>
 </مقطع>
 <مقطع رقم="٣٧">إِنِ كَانَ فَاعِلًا</مقطع>
 <مقطع رقم="٣٨">وَ<قول رقم="١٠">مِنْ ضَرْبِهِ زِيْدٌ</قول>
 </مقطع>
 <مقطع رقم="٣٩">إِنِ كَانَ الْمُضْمَرُ مَفْعُوْلًا</مقطع>
 <مقطع رقم="٤٠">وَتَقُوْلُ <قول رقم="١١">عَجِبْتُ مِنْ كِسْوَةٍ زَيْدٍ أَبُوْهُ</قول>
 </مقطع>
 <مقطع رقم="٤١">وَ<قول رقم="١٢">عَجِبْتُ مِنْ كِسْوَةِ زَيْدٍ أَبَاهُ</قول>
 </مقطع>
 <مقطع رقم="٤٢">إِذَا حَذَفْتَ التَّنْوِيْنِ</مقطع>
 <مقطع رقم="٤٣">وَمِمَّا جَاءَ لَا يُنَوَّنُ قُوْلُ لَبِيْدٍ</مقطع>
 <شاهدة مقطع="٤٤" رقم="٤">
 <بيت>
 <مصراع>عَهْدِى بِهَا الْحَيَّ الْجَمِيْعَ وَفِيْهِمُ</مصراع>
 <مصراع>قَبْلَ التَّفَرُّقِ مَيْسِرٌ وَنِدَامُ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٤٥">وَمِنْهُ قَوْلُهُمْ <قول رقم="١٣">سَمْعُ أُذُنِي زَيْدًا يَقُوْلُ ذَاكَ</قول>
 </مقطع>
 <مقطع رقم="٤٦">قَالَ رُؤْبَةُ</مقطع>
 <شاهدة مقطع="٤٧" رقم="٥">
 <بيت>
 <مصراع>وَرَأْىُ عَيْنَىَّ الْفَتَى أَخَاكًا</مصراع>
 <مصراع>يُعْطِىَ الْجَزِيلَ فَعَلَيْكَ ذَاكًا</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٤٨">وَتَقُوْلُ <قول رقم="١٤">عَجِبْتُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرٍو</قول>
 </مقطع>
 <مقطع رقم="٤٩">إِذَا أَشْرَكْتَ بَيْنَهُمًا</مقطع>
 <مقطع رقم="٥٠">كَمَا فَعَلْتَ ذٰلِكَ في الْفَاعِلِ</مقطع>
 <مقطع رقم="٥١">وَمَنْ قَالَ <قول رقم="١٥">هَذا ضَارِبُ زَيْدٍ وَعَمْرًا</قول>
 </مقطع>
 <مقطع رقم="٥٢">قَالَ <قول رقم="١٦">عَجِبْتُ لَهُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرًا</قول>
 </مقطع>
 <مقطع رقم="٥٣">كَأَنَّهُ أَضْمَرَ <حرف>وَيَضْرِبُ عَمْرًا</حرف> أَوْ <حرف>وَضَرَبَ عَمْرًا</حرف>
 </مقطع>
 <مقطع رقم="٥٤">قَالَ رُؤْبَةُ</مقطع>
 <شاهدة مقطع="٥٥" رقم="٦">
 <بيت>
 <مصراع>قَدْ كُنْتُ دَايَنْتُ بِهَا حَسَّانًا</مصراع>
 <مصراع>مَخَافَةَ الْإِفْلَاسِ وَاللَيَانًا</مصراع>
 </بيت>
 </شاهدة>
 <شاهدة مقطع="٥٦" رقم="٧">
 <بيت>
 <مصراع>يُحْسِنُ بَيْعَ الْأَصْلِ وَالَقْيَانًا</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٥٧">وَتَقُوْلُ <قول رقم="١٧">عَجِبْتُ مِنَ الضَّرْبِ زَيْدًا</قول>
 </مقطع>
 <مقطع رقم="٥٨">كَمَا قُلْتَ <قول رقم="١٨">عَجِبْتُ مِنَ الضَّارِبِ زَيْدًا</قول>
 </مقطع>
 <مقطع رقم="٥٩">يَكُوْنُ الْأَلِفُ وَاللَّامُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
 <مقطع رقم="٦٠">وَقَالَ الْشَّاعِرُ</مقطع>
 <شاهدة مقطع="٦١" رقم="٨">
 <بيت>
 <مصراع>ضَعِيْفُ النِكايَةً أَعْدَاءَهُ</مصراع>
 <مصراع>يَخْالُ الْفِرَارَ يُرَاخِىْ الْأَجَلْ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٦٢">وَقَالَ الْمَرَّارُ الْأَسَدِىِّ</مقطع>
 <شاهدة مقطع="٦٣" رقم="٩">
 <بيت>
 <مصراع>لَقَدْ عَلِمَتْ أُوْلَىْ الْمُغِيْرَةِ أَنَّنِى</مصراع>
 <مصراع>لَحِقَتْ فَلَمْ أنّكلّ عَنْ الضَّرّبُ مِسْمَعًا</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٦٤">وَمَنْ قَالَ <قول رقم="١٩">هٰذَا الضَّارِبُ الرَّجُلِ</قول>
 </مقطع>
 <مقطع رقم="٦٥">لَمْ يَقُلْ <قول رقم="٢٠">عَجِبْتُ لَهُ مِنَ الضَّرْبِ الرِّجْلِ</قول>
 </مقطع>
 <مقطع رقم="٦٦">لِأَنَّ <حرف>الضَّارِبَ الرَّجُلِ</حرف>
 </مقطع>
 <مقطع رقم="٦٧">مُشَبَّهٌ بِـ<حرف>الْحَسَنِ الْوَجْهِ</حرف>
 </مقطع>
 <مقطع رقم="٦٨">لِأَنَّهُ وَصْفٌ لِلْاِسْمِ</مقطع>
 <مقطع رقم="٦٩">كَمَا أَنَّ <حرف>الْحَسَنَ</حرف> وَصْفٌ</مقطع>
 <مقطع رقم="٧٠">وَلَيْسَ هُوَ بِحَدِّ الْكَلَامِ مَعَ ذٰلِكَ</مقطع>
 <مقطع رقم="٧١">وَقَدْ يَنْبَغِي في قِيَاسِ مَنْ قَالَ <حرف>الضَّارِبُ الرَّجُلِ</حرف>
 </مقطع>
 <مقطع رقم="٧٢">أَنْ يَقُوْلَ <حرف>الضَّارِبُ أَخِي الرَّجُلِ</حرف>
 </مقطع>
 <مقطع رقم="٧٣">كَمَا يَقُوْلُ <حرف>الْحَسَنُ الْأَخِ</حرف> وَ<حرف>الْحَسَنُ وَجْهِ الْأَخِ</حرف>
 </مقطع>
 <مقطع رقم="٧٤">وَكَانَ الْخَلِيْلُ يَرَاهُ</مقطع>
 <مقطع رقم="٧٥">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٢١">هٰذَا ضَرْبُ عَبْدِ اللّٰهِ</قول>
 </مقطع>
 <مقطع رقم="٧٦">كَمَا تَقُوْلُ <قول رقم="٢٢">هٰذَا ضَارِبُ عَبْدِ اللّٰهِ</قول>
 </مقطع>
 <مقطع رقم="٧٧">فِيْمَا انْقَطَعَ مِنْ الْأَفْعَالِ</مقطع>
 <مقطع رقم="٧٨">وَتَقُوْلُ <قول رقم="٢٣">عَجِبْتُ مِنْ ضَرْبِ الْيَوْمِ زَيْدًا</قول>
 </مقطع>
 <مقطع رقم="٧٩">كَمَا قَالَ</مقطع>
 <شاهدة مقطع="٨٠" رقم="١٠">
 <بيت>
 <مصراع>يَا سَارِقَ الْلَّيْلَةِ أَهْلَ الْدَّارْ</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٨١">وَلَيْسَ مِثْلَ</مقطع>
 <شاهدة مقطع="٨٢" رقم="١١">
 <بيت>
 <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهًا</مصراع>
 </بيت>
 </شاهدة>
 <مقطع رقم="٨٣">لِأَنَّهُمْ لَمْ يَجْعَلُوْهُ <حرف>فِعْلًا</حرف> أَوْ <حرف>فَعَلَ شَيْئًا في الْيَوْمِ</حرف>
 </مقطع>
 <مقطع رقم="٨٤">إِنَّمَا هُوَ بِمَنْزِلَةِ <حرف>لِلَّهِ بِلَادُكَ</حرف>
 </مقطع>
 <مقطع رقم="٨٥">وَيَجُوْزُ <قول رقم="٢٤">عَجِبْتُ لَهُ مِنْ ضَرْبِ أَخِيْهِ</قول>
 </مقطع>
 <مقطع رقم="٨٦">يَكُوْنُ الْمَصْدَرُ مُضَافًا</مقطع>
 <مقطع رقم="٨٧">فَعَلَ أَوْ لَمْ يَفْعَلْ</مقطع>
 <مقطع رقم="٨٨">وَيَكُوْنُ مُنَوَّنًا</مقطع>
 <مقطع رقم="٨٩">وَلَيْسَ بِمَنْزِلَةِ ضَارِبٍ</مقطع>
