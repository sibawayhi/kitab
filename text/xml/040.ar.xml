<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٧"
     درنبورج="١-٧٩"
     هارون="١-١٨٩"
     يعقوب="١-٢٤٩"
     البكاء="١-٢٦٢"
     رقم="٤٠">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ مِنَ الْمَصَادِرِ جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ في عَمَلِهِ وَمَعْنَاهُ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ  <قول>عَجِبْتُ مِنْ ضَرْبِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣">فَمَعْنَاهُ أَنَّهُ يَضْرِبُ زَيْدًا</مقطع>
  <مقطع رقم="٤">وَتَقُوْلُ  <قول>عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا بَكْرٌ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول>مِنْ ضَرْبٍ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٦">إِذَا كَانَ هُوَ الْفَاعِلُ</مقطع>
  <مقطع رقم="٧">كَأَنَّهُ قَالَ  <قول>عَجِبْتُ مِنْ أَنَّهُ يَضْرِبُ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٨">وَ<قول>يَضْرِبُ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٩">وَإِنَّمَا خَالَفَ هٰذَا الِاسْمَ الَّذِىْ جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ</مقطع>
  <مقطع رقم="١٠">في أَنَّ فِيْهِ فَاعِلًا وَمَفْعُوْلًا</مقطع>
  <مقطع رقم="١١">لِأَنَّكَ إِذَا قُلْتَ  <قول>هٰذَا ضَارِبٌ</قول>
  </مقطع>
  <مقطع رقم="١٢">فَقَدْ جِئْتَ بِالْفَاعِلِ وَذَكَرْتَهُ</مقطع>
  <مقطع رقم="١٣">وَإِذَا قُلْتَ  <قول>عَجِبْتُ مِنْ ضَرْبٍ</قول>
  </مقطع>
  <مقطع رقم="١٤">فَإِنَّكَ لَمْ تَذْكُرْ الْفَاعِلَ</مقطع>
  <مقطع رقم="١٥">فَالْمَصْدَرُ لَيْسَ بِالْفَاعِلِ</مقطع>
  <مقطع رقم="١٦">وَإِنْ كَانَ فِيْهِ دَلِيْلٌ عَلَى الْفَاعِلِ</مقطع>
  <مقطع رقم="١٧">فَلِذٰلِكَ احْتَجْتَ فِيْهِ إِلَى فَاعِلٍ وَمَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٨">وَلَمْ تَحْتَجْ حِيْنَ قُلْتَ  <قول>هٰذَا ضَاربٌ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٩">إِلَى فَاعِلٍ ظَاهِرٍ</مقطع>
  <مقطع رقم="٢٠">لِأَنَّ الْمُضْمَرُ في  <حرف>ضَارِبٍ</حرف> هُوَ الْفَاعِلُ</مقطع>
  <مقطع رقم="٢١">فَمِمَّا جَاءَ مِنْ هٰذَا قَوْلُهُ عَزَّ وَجَلَّ
  <آية>أَوْ إِطْعَامٌ فِي يَوْمٍ ذِيْ مَسْغَبَةٍ يَتِيْمَا ذَا مَقْرَبَةٍ</آية></مقطع>
  <مقطع رقم="٢٢">وَقَالَ</مقطع>
  <شاهدة رقم="١" xml:id="٤٠-١">
    <بيت>
      <مصراع>فَلَوْلا رَجَاءٌ الْنَّصْرُ مِنْكَ وَرَهْبَةً</مصراع>
      <مصراع>عِقَابِكَ قَدْ صَارُوْا لَنَا كَالْمَوَارٍ دَ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٣">وَ قَالَ</مقطع>
  <شاهدة رقم="٢" xml:id="٤٠-٢">
    <بيت>
      <مصراع>أَخَذْتُ بِسجَلَهُمْ فنَفَحتُ فِيْهِ</مصراع>
      <مصراع>مُحَافَظَةً لَهُنَّ إِخّا الْذِّمَامِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع>وَقَالَ</مقطع>
  <شاهدة رقم="٣" xml:id="٤٠-٣">
  <بيت>
    <مصراع>بِضَرْبٍ بِالسُّيُوْفِ رُءُوْسَ قَوْمٍ</مصراع>
    <مصراع>أَزَلْنَا هَامَهُنَّ عَنِ الْمَقِيْلِ</مصراع>
  </بيت>
</شاهدة>
<مقطع رقم="٢٤">وَإِنْ شِئْتَ حَذَفْتَ التَّنْوِينَ كَمَا حَذَفْتَ في الْفَاعِلِ</مقطع>
<مقطع رقم="٢٥">وَكَانَ الْمَعْنَى عَلَى حَالِهِ</مقطع>
<مقطع رقم="٢٦">إِلَّا أَنَّكَ تَجُرُّ الَّذِي يَلِي الْمَصْدَرَ</مقطع>
<مقطع رقم="٢٧">فَاعِلًا كَانَ أَوْ مَفْعُوْلًا</مقطع>
<مقطع رقم="٢٨">لِأَنَّهُ اسْمٌ قَدْ كَفَفْتَ عَنْهُ التَّنْوِيْنَ</مقطع>
<مقطع رقم="٢٩">كَمَا فَعَلْتَ ذٰلِكَ بِفَاعِلٍ</مقطع>
<مقطع رقم="٣٠">وَيَصِيْرُ الْمَجْرُوْرُ بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
<مقطع رقم="٣١">مُعَاقِبًا لَهُ</مقطع>
<مقطع رقم="٣٢">وَذٰلِكَ قَوْلُكَ  <قول>عَجَبِتُ مِنْ ضَرْبِهِ زَيْدًا</قول>
</مقطع>
<مقطع رقم="٣٣">إِنِ كَانَ فَاعِلًا</مقطع>
<مقطع رقم="٣٤">وَ<قول>مِنْ ضَرْبِهِ زِيْدٌ</قول>
</مقطع>
<مقطع رقم="٣٥">إِنِ كَانَ الْمُضْمَرُ مَفْعُوْلًا</مقطع>
<مقطع رقم="٣٦">وَتَقُوْلُ  <قول>عَجِبْتُ مِنْ كِسْوَةٍ زَيْدٍ أَبُوْهُ</قول>
</مقطع>
<مقطع رقم="٣٧">وَ<قول>عَجِبْتُ مِنْ كِسْوَةِ زَيْدٍ أَبَاهُ</قول>
</مقطع>
<مقطع رقم="٣٨">إِذَا حَذَفْتَ التَّنْوِيْنِ</مقطع>
<مقطع رقم="٣٩">وَمِمَّا جَاءَ لَا يُنَوَّنُ قُوْلُ لَبِيْدٍ</مقطع>
<شاهدة رقم="٤" xml:id="٤٠-٤">
  <بيت>
    <مصراع>عَهْدِى بِهَا الْحَيَّ الْجَمِيْعَ وَفِيْهِمُ</مصراع>
    <مصراع>قَبْلَ التَّفَرُّقِ مَيْسِرٌ وَنِدَامُ</مصراع>
  </بيت>
</شاهدة>
<هارون مجلد="١" صفحة="١٩٠"/>
<مقطع رقم="٤٠">وَمِنْهُ قَوْلُهُمْ  <قول>سَمْعُ أُذُنِي زَيْدًا يَقُوْلُ ذَاكَ</قول>
</مقطع>
<مقطع رقم="٤١">قَالَ رُؤْبَةُ</مقطع>
<شاهدة رقم="٥" xml:id="٤٠-٥">
  <بيت>
    <مصراع>وَرَأْىُ عَيْنَىَّ الْفَتَى أَخَاكًا</مصراع>
    <مصراع>يُعْطِىَ الْجَزِيلَ فَعَلَيْكَ ذَاكًا</مصراع>
  </بيت>
</شاهدة>
<مقطع رقم="٤٢">وَتَقُوْلُ  <قول>عَجِبْتُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرٍو</قول>
</مقطع>
<مقطع رقم="٤٣">إِذَا أَشْرَكْتَ بَيْنَهُمًا</مقطع>
<مقطع رقم="٤٤">كَمَا فَعَلْتَ ذٰلِكَ في الْفَاعِلِ</مقطع>
<مقطع رقم="٤٥">وَمَنْ قَالَ  <قول>هَذا ضَارِبُ زَيْدٍ وَعَمْرًا</قول>
</مقطع>
<مقطع رقم="٤٦">قَالَ  <قول>عَجِبْتُ لَهُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرًا</قول>
</مقطع>
<مقطع رقم="٤٧">كَأَنَّهُ أَضْمَرَ  <حرف>وَيَضْرِبُ عَمْرًا</حرف> أَوْ  <حرف>وَضَرَبَ عَمْرًا</حرف>
</مقطع>
<مقطع رقم="٤٨">قَالَ رُؤْبَةُ</مقطع>
<شاهدة رقم="٦" xml:id="٤٠-٦">
  <بيت>
    <مصراع>قَدْ كُنْتُ دَايَنْتُ بِهَا حَسَّانًا</مصراع>
    <مصراع>مَخَافَةَ الْإِفْلَاسِ وَاللَيَانًا</مصراع>
  </بيت>
</شاهدة>
<هارون مجلد="١" صفحة="١٩١"/>
<شاهدة رقم="٧" xml:id="٤٠-٧">
  <بيت>
    <مصراع>يُحْسِنُ بَيْعَ الْأَصْلِ وَالَقْيَانًا</مصراع>
  </بيت>
</شاهدة>
<مقطع رقم="٤٩">وَتَقُوْلُ  <قول>عَجِبْتُ مِنَ الضَّرْبِ زَيْدًا</قول>
</مقطع>
<مقطع رقم="٥٠">كَمَا قُلْتَ  <قول>عَجِبْتُ مِنَ الضَّارِبِ زَيْدًا</قول>
</مقطع>
<مقطع رقم="٥١">يَكُوْنُ الْأَلِفُ وَاللَّامُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
<مقطع رقم="٥٢">وَقَالَ الْشَّاعِرُ</مقطع>
<شاهدة رقم="٨" xml:id="٤٠-٨">
  <بيت>
    <مصراع>ضَعِيْفُ النِكايَةً أَعْدَاءَهُ</مصراع>
    <مصراع>يَخْالُ الْفِرَارَ يُرَاخِىْ الْأَجَلْ</مصراع>
  </بيت>
</شاهدة>
<مقطع رقم="٥٣">وَقَالَ الْمَرَّارُ الْأَسَدِىِّ</مقطع>
<هارون مجلد="١" صفحة="١٩٢"/>
<شاهدة رقم="٩" xml:id="٤٠-٩">
  <بيت>
    <مصراع>لَقَدْ عَلِمَتْ أُوْلَىْ الْمُغِيْرَةِ أَنَّنِى</مصراع>
    <مصراع>لَحِقَتْ فَلَمْ أنّكلّ عَنْ الضَّرّبُ مِسْمَعًا</مصراع>
  </بيت>
</شاهدة>
<مقطع رقم="٥٤">وَمَنْ قَالَ  <قول>هٰذَا الضَّارِبُ الرَّجُلِ</قول>
</مقطع>
<مقطع رقم="٥٥">لَمْ يَقُلْ  <قول>عَجِبْتُ لَهُ مِنَ الضَّرْبِ الرِّجْلِ</قول>
</مقطع>
<مقطع رقم="٥٦">لِأَنَّ  <حرف>الضَّارِبَ الرَّجُلِ</حرف>
</مقطع>
<مقطع رقم="٥٧">مُشَبَّهٌ بِـ<حرف>الْحَسَنِ الْوَجْهِ</حرف>
</مقطع>
<مقطع رقم="٥٨">لِأَنَّهُ وَصْفٌ لِلْاِسْمِ</مقطع>
<مقطع رقم="٥٩">كَمَا أَنَّ  <حرف>الْحَسَنَ</حرف> وَصْفٌ</مقطع>
<مقطع رقم="٦٠">وَلَيْسَ هُوَ بِحَدِّ الْكَلَامِ مَعَ ذٰلِكَ</مقطع>
<مقطع رقم="٦١">وَقَدْ يَنْبَغِي في قِيَاسِ مَنْ قَالَ  <حرف>الضَّارِبُ الرَّجُلِ</حرف>
</مقطع>
<مقطع رقم="٦٢">أَنْ يَقُوْلَ  <حرف>الضَّارِبُ أَخِي الرَّجُلِ</حرف>
</مقطع>
<مقطع رقم="٦٣">كَمَا يَقُوْلُ  <حرف>الْحَسَنُ الْأَخِ</حرف> وَ<حرف>الْحَسَنُ وَجْهِ الْأَخِ</حرف>
</مقطع>
<مقطع رقم="٦٤">وَكَانَ الْخَلِيْلُ يَرَاهُ</مقطع>
<مقطع رقم="٦٥">وَإِنْ شِئْتَ قُلْتَ  <قول>هٰذَا ضَرْبُ عَبْدِ اللّٰهِ</قول>
</مقطع>
<مقطع رقم="٦٦">كَمَا تَقُوْلُ  <قول>هٰذَا ضَارِبُ عَبْدِ اللّٰهِ</قول>
</مقطع>
<مقطع رقم="٦٧">فِيْمَا انْقَطَعَ مِنْ الْأَفْعَالِ</مقطع>
<مقطع رقم="٦٨">وَتَقُوْلُ  <قول>عَجِبْتُ مِنْ ضَرْبِ الْيَوْمِ زَيْدًا</قول>
</مقطع>
<مقطع رقم="٦٩">كَمَا قَالَ</مقطع>
<شاهدة رقم="١٠" xml:id="٤٠-١٠">
  <بيت>
    <مصراع>يَا سَارِقَ الْلَّيْلَةِ أَهْلَ الْدَّارْ</مصراع>
  </بيت>
</شاهدة>
<هارون مجلد="١" صفحة="١٩٣"/>
<مقطع رقم="٧٠">وَلَيْسَ مِثْلَ</مقطع>
<شاهدة رقم="١١" xml:id="٤٠-١١">
  <بيت>
    <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهًا</مصراع>
  </بيت>
</شاهدة>
<مقطع رقم="٧١">لِأَنَّهُمْ لَمْ يَجْعَلُوْهُ  <حرف>فِعْلًا</حرف> أَوْ  <حرف>فَعَلَ شَيْئًا في الْيَوْمِ</حرف>
</مقطع>
<مقطع رقم="٧٢">إِنَّمَا هُوَ بِمَنْزِلَةِ  <حرف>لِلَّهِ بِلَادُكَ</حرف>
</مقطع>
<مقطع رقم="٧٣">وَيَجُوْزُ  <قول>عَجِبْتُ لَهُ مِنْ ضَرْبِ أَخِيْهِ</قول>
</مقطع>
<مقطع رقم="٧٤">يَكُوْنُ الْمَصْدَرُ مُضَافًا</مقطع>
<مقطع رقم="٧٥">فَعَلَ أَوْ لَمْ يَفْعَلْ</مقطع>
<مقطع رقم="٧٦">وَيَكُوْنُ مُنَوَّنًا</مقطع>
<مقطع رقم="٧٧">وَلَيْسَ بِمَنْزِلَةِ ضَارِبٍ</مقطع>

