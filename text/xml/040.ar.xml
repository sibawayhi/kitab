<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٧"
     درنبورج="١-٧٩"
     البكاء="١-٢٦٢"
     هارون="١-١٨٩"
     يعقوب="١-٢٤٩"
     رقم="٤٠">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبٌ مِنَ الْمَصَاْدِرِ جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ في عَمَلِهِ وَمَعْنَاْهُ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ <قول رقم="١">عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣">فَمَعْنَاْهُ أَنَّهُ يَضْرِبُ زَيْدًا</مقطع>
  <مقطع رقم="٤">وَتَقُوْلُ <قول رقم="٢">عَجِبْتُ مِنْ ضَرْبٍ زَيْدًا بَكْرٌ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول رقم="٣">مِنْ ضَرْبٍ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٦">إِذَا كَاْنَ هُوَ الْفَاْعِلُ</مقطع>
  <مقطع رقم="٧">كَأَنَّهُ قَاْلَ <قول رقم="٤">عَجِبْتُ مِنْ أَنَّهُ يَضْرِبُ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٨">وَ<قول رقم="٥">
  <تقدير>عَجِبْتُ مِنْ أَنَّهُ</تقدير> يَضْرِبُ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٩">وَإِنَّمَا خَاْلَفَ هٰذَا الِاسْمَ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ</مقطع>
  <مقطع رقم="١٠">في أَنَّ فِيْهِ فَاْعِلًا وَمَفْعُوْلًا</مقطع>
  <مقطع رقم="١١">لِأَنَّكَ إِذَا قُلْتَ <قول رقم="٦">هٰذَا ضَاْرِبٌ</قول>
  </مقطع>
  <مقطع رقم="١٢">فَقَدْ جِئْتَ بِالْفَاْعِلِ وَذَكَرْتَهُ</مقطع>
  <مقطع رقم="١٣">وَإِذَا قُلْتَ <قول رقم="٧">عَجِبْتُ مِنْ ضَرْبٍ</قول>
  </مقطع>
  <مقطع رقم="١٤">فَإِنَّكَ لَمْ تَذْكُرْ الْفَاْعِلَ</مقطع>
  <مقطع رقم="١٥">فَالْمَصْدَرُ لَيْسَ بِالْفَاْعِلِ</مقطع>
  <مقطع رقم="١٦">وَإِنْ كَاْنَ فِيْهِ دَلِيْلٌ عَلَى الْفَاْعِلِ</مقطع>
  <مقطع رقم="١٧">فَلِذٰلِكَ احْتَجْتَ فِيْهِ إِلَى فَاْعِلٍ وَمَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٨">وَلَمْ تَحْتَجْ حِيْنَ قُلْتَ <قول رقم="٨">هٰذَا ضَاْربٌ زَيْدًا</قول> إِلَى فَاْعِلٍ ظَاْهِرٍ</مقطع>
  <مقطع رقم="١٩">لِأَنَّ الْمُضْمَرَ في <حرف>ضَاْرِبٍ</حرف> هُوَ الْفَاْعِلُ</مقطع>
  <مقطع رقم="٢٠">فَمِمَّا جَاءَ مِنْ هٰذَا قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="٢١">
    <آية سورة="١١" آية="١٤-١٥">أَوْ إِطْعَامٌ فِي يَوْمٍ ذِي مَسْغَبَةٍ ۝ يَتِيْمًا ذَا مَقْرَبَةٍ</آية>
  </مقطع>
  <مقطع رقم="٢٢">وَقَالَ</مقطع>
  <شاهدة مقطع="٢٣" رقم="١">
    <بيت>
      <مصراع>فَلَوْلَا رَجَاءُ النَّصْرِ مِنْكَ وَرَهْبَةٌ</مصراع>
      <مصراع>عِقَاْبَكَ قَدْ صَاْرُوْا لَنَا كَالْمَوَاْرِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٤">وَ قَالَ</مقطع>
  <شاهدة مقطع="٢٥" رقم="٢">
    <بيت>
      <مصراع>أَخَذْتُ بِسَجْلِهِمْ فَنَفَحْتُ فِيْهِ</مصراع>
      <مصراع>مُحَاْفَظَةً لَهُنَّ إِخَا الذِّمَاْمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٦">وَقَالَ</مقطع>
  <شاهدة مقطع="٢٧" رقم="٣">
    <بيت>
      <مصراع>بِضَرْبٍ بِالسُّيُوْفِ رُءُوْسَ قَوْمٍ</مصراع>
      <مصراع>أَزَلْنَا هَامَهُنَّ عَنِ الْمَقِيْلِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٨">وَإِنْ شِئْتَ حَذَفْتَ التَّنْوِيْنَ كَمَا حَذَفْتَ في الْفَاْعِلِ</مقطع>
  <مقطع رقم="٢٩">وَكَاْنَ الْمَعْنَى عَلَى حَاْلِهِ</مقطع>
  <مقطع رقم="٣٠">إِلَّا أَنَّكَ تَجُرُّ الَّذِي يَلِي الْمَصْدَرَ</مقطع>
  <مقطع رقم="٣١">فَاْعِلًا كَاْنَ أَوْ مَفْعُوْلًا</مقطع>
  <مقطع رقم="٣٢">لِأَنَّهُ اسْمٌ قَدْ كَفَفْتَ عَنْهُ التَّنْوِيْنَ</مقطع>
  <مقطع رقم="٣٣">كَمَا فَعَلْتَ ذٰلِكَ بِفَاْعِلٍ</مقطع>
  <مقطع رقم="٣٤">وَيَصِيْرُ الْمَجْرُوْرُ بَدَلًا مِنَ التَّنْوِيْنِ مُعَاقِبًا لَهُ</مقطع>
  <مقطع رقم="٣٥">وَذٰلِكَ قَوْلُكَ <قول رقم="٩">عَجَبِتُ مِنْ ضَرْبِهِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٦">إِنْ كَاْنَ فَاْعِلًا</مقطع>
  <مقطع رقم="٣٧">وَ<قول رقم="١٠">
  <تقدير>عَجَبِتُ</تقدير> مِنْ ضَرْبِهِ زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٣٨">إِنْ كَانَ الْمُضْمَرُ مَفْعُوْلًا</مقطع>
  <مقطع رقم="٣٩">وَتَقُوْلُ <قول رقم="١١">عَجِبْتُ مِنْ كِسْوَةٍ زَيْدٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="٤٠">وَ<قول رقم="١٢">عَجِبْتُ مِنْ كِسْوَةِ زَيْدٍ أَبَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٤١">إِذَا حَذَفْتَ التَّنْوِيْنَ</مقطع>
  <مقطع رقم="٤٢">وَمِمَّا جَاءَ لَا يُنَوَّنُ قُوْلُ لَبِيْدٍ</مقطع>
  <شاهدة مقطع="٤٣" رقم="٤">
    <بيت>
      <مصراع>عَهْدِى بِهَا الْحَيَّ الْجَمِيْعَ وَفِيْهِمُ</مصراع>
      <مصراع>قَبْلَ التَّفَرُّقِ مَيْسِرٌ وَنِدَاْمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٤">وَمِنْهُ قَوْلُهُمْ <قول رقم="١٣">سَمْعُ أُذُنِي زَيْدًا يَقُوْلُ ذَاكَ</قول>
  </مقطع>
  <مقطع رقم="٤٥">قَالَ رُؤْبَةُ</مقطع>
  <شاهدة مقطع="٤٦" رقم="٥">
    <بيت>
      <مصراع>وَرَأْىُ عَيْنَيَّ الْفَتَى أَخَاكَا</مصراع>
      <مصراع>يُعْطِي الْجَزِيْلَ فَعَلَيْكَ ذَاكَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٧">وَتَقُوْلُ <قول رقم="١٤">عَجِبْتُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٤٨">إِذَا أَشْرَكْتَ بَيْنَهُمَا</مقطع>
  <مقطع رقم="٤٩">كَمَا فَعَلْتَ ذٰلِكَ في الْفَاْعِلِ</مقطع>
  <مقطع رقم="٥٠">وَمَنْ قَاْلَ <قول رقم="١٥">هَذا ضَارِبُ زَيْدٍ وَعَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٥١">قَاْلَ <قول رقم="١٦">عَجِبْتُ لَهُ مِنْ ضَرْبِ زَيْدٍ وَعَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٥٢">كَأَنَّهُ أَضْمَرَ <حرف>وَيَضْرِبُ عَمْرًا</حرف> أَوْ <حرف>وَضَرَبَ عَمْرًا</حرف>
  </مقطع>
  <مقطع رقم="٥٣">قَالَ رُؤْبَةُ</مقطع>
  <شاهدة مقطع="٥٤" رقم="٦">
    <بيت>
      <مصراع>قَدْ كُنْتُ دَاْيَنْتُ بِهَا حَسَّاْنًا</مصراع>
      <مصراع>مَخَاْفَةَ الْإِفْلَاسِ وَاللَّيَانَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>يُحْسِنُ بَيْعَ الْأَصْلِ وَالَقْيَانَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٥">وَتَقُوْلُ <قول رقم="١٧">عَجِبْتُ مِنَ الضَّرْبِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٥٦">كَمَا قُلْتَ <قول رقم="١٨">عَجِبْتُ مِنَ الضَّاْرِبِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٥٧">يَكُوْنُ الْأَلِفُ وَاللَّامُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٥٨">وَقَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة مقطع="٥٩" رقم="٧">
    <بيت>
      <مصراع>ضَعِيْفُ النِّكَاْيَةِ أَعْدَاْءَهُ</مصراع>
      <مصراع>يَخَاْلُ الْفِرَاْرَ يُرَاْخِي الْأَجَلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٠">وَقَاْلَ الْمَرَّاْرُ الْأَسَدِيِّ</مقطع>
  <شاهدة مقطع="٦١" رقم="٨">
    <بيت>
      <مصراع>لَقَدْ عَلِمَتْ أُوْلَى الْمُغِيْرَةِ أَنَّنِي</مصراع>
      <مصراع>لَحِقْتُ فَلَمْ أَنْكُلْ عَنْ الضَّرْبِ مِسْمَعَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٢">وَمَنْ قَاْلَ <قول رقم="١٩">هٰذَا الضَّاْرِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٦٣">لَمْ يَقُلْ <قول رقم="٢٠">عَجِبْتُ لَهُ مِنَ الضَّرْبِ الرِّجْلِ</قول>
  </مقطع>
  <مقطع رقم="٦٤">لِأَنَّ <حرف>الضَّارِبَ الرَّجُلِ</حرف>
  </مقطع>
  <مقطع رقم="٦٥">مُشَبَّهٌ بِـ<حرف>الْحَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٦٦">لِأَنَّهُ وَصْفٌ لِلْاِسْمِ</مقطع>
  <مقطع رقم="٦٧">كَمَا أَنَّ <حرف>الْحَسَنَ</حرف> وَصْفٌ</مقطع>
  <مقطع رقم="٦٨">وَلَيْسَ هُوَ بِحَدِّ الْكَلَامِ مَعَ ذٰلِكَ</مقطع>
  <مقطع رقم="٦٩">وَقَدْ يَنْبَغِي في قِيَاْسِ مَنْ قَالَ <حرف>الضَّارِبُ الرَّجُلِ</حرف>
  </مقطع>
  <مقطع رقم="٧٠">أَنْ يَقُوْلَ <حرف>الضَّاْرِبُ أَخِي الرَّجُلِ</حرف>
  </مقطع>
  <مقطع رقم="٧١">كَمَا يَقُوْلُ <حرف>الْحَسَنُ الْأَخِ</حرف> وَ<حرف>الْحَسَنُ وَجْهِ الْأَخِ</حرف>
  </مقطع>
  <مقطع رقم="٧٢">وَكَاْنَ الْخَلِيْلُ يَرَاْهُ</مقطع>
  <مقطع رقم="٧٣">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٢١">هٰذَا ضَرْبُ عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٧٤">كَمَا تَقُوْلُ <قول رقم="٢٢">هٰذَا ضَاْرِبُ عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٧٥">فِيْمَا انْقَطَعَ مِنْ الْأَفْعَالِ</مقطع>
  <مقطع رقم="٧٦">وَتَقُوْلُ <قول رقم="٢٣">عَجِبْتُ مِنْ ضَرْبِ الْيَوْمِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٧٧">كَمَا قَالَ</مقطع>
  <شاهدة مقطع="٧٨" رقم="٩">
    <بيت>
      <مصراع>يَا سَارِقَ الْلَّيْلَةِ أَهْلَ الْدَّارْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٩">وَلَيْسَ مِثْلَ</مقطع>
  <شاهدة مقطع="٨٠" رقم="١٠">
    <بيت>
      <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨١">لِأَنَّهُمْ لَمْ يَجْعَلُوْهُ <حرف>فِعْلًا</حرف> أَوْ <حرف>فَعَلَ شَيْئًا في الْيَوْمِ</حرف>
  </مقطع>
  <مقطع رقم="٨٢">إِنَّمَا هُوَ بِمَنْزِلَةِ <حرف>لِلَّهِ بِلَادُكَ</حرف>
  </مقطع>
  <مقطع رقم="٨٣">وَيَجُوْزُ <قول رقم="٢٤">عَجِبْتُ لَهُ مِنْ ضَرْبِ أَخِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٨٤">يَكُوْنُ الْمَصْدَرُ مُضَاْفًا فَعَلَ أَوْ لَمْ يَفْعَلْ</مقطع>
  <مقطع رقم="٨٥">وَيَكُوْنُ مُنَوَّنًا</مقطع>
  <مقطع رقم="٨٦">وَلَيْسَ بِمَنْزِلَةِ ضَاْرِبٍ</مقطع>
