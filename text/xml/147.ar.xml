<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٠٦"
     درنبورج="١-٢٦٤"
     البكاء="٣-٧٩"
     هارون="٢-١٨٨"
     يعقوب="٢-١٩٠"
     رقم="١٤٧">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبٌ لَا يَكُوْنُ الْوَصْفُ الْمُفْرَدُ فِيْهِ إِلَّا رَفْعًا</مقطع>
       <مقطع رقم="٢">وَلَا يَقَعُ فِي مَوْقِعِهِ غَيْرُ الْمُفْرَدِ</مقطع>
   </عنوان>
    <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ <قول>يَا أَيُّهَا الرَّجُلُ</قول>
   </مقطع>
    <مقطع رقم="٤">وَ<قول>يَا أَيُّهَا الرَّجُلانِ</قول>
   </مقطع>
    <مقطع رقم="٥">وَ<قول>يَا أَيُّهَا الْمَرْأَتَاْنِ</قول>
   </مقطع>
    <مقطع رقم="٦">فَـ<حرف>أَيُّ</حرف>  هٰهُنَا فِيْمَا زَعَمَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ كَقَوْلِكَ <قول>يَا هٰذَا</قول>
   </مقطع>
    <مقطع رقم="٧">وَ<حرف>الرَّجُلُ</حرف>  وَصْفٌ لَهُ كَمَا يَكُوْنُ وَصْفًا لِـ<حرف>هٰذَا</حرف>
   </مقطع>
    <مقطع رقم="٨">وَإِنَّمَا صَاْرَ وَصْفُهُ لَا يَكُوْنُ فِيْهِ إِلَّا الرَّفْعُ</مقطع>
    <مقطع رقم="٩">لِأَنَّكَ لَا تَسْتَطِيْعُ أَنْ تَقُوْلَ  <حرف>يَا أَيُّ</حرف>  وَلَا  <حرف>يَا أَيُّهَا</حرف> وَتَسْكُتَ</مقطع>
    <مقطع رقم="١٠">لِأَنَّهُ مُبْهَمٌ يَلْزَمُهُ التَفْسِيْرُ</مقطع>
    <مقطع رقم="١١">فَصَاْرَ هُوَ وَ<حرف>الرَّجُلُ</حرف>  بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="١٢">كَأَنَّكَ قُلْتَ <قول>يَا رَجُلُ</قول>
   </مقطع>
    <هارون مجلد="٢" صفحة="١٨٨"/>
    <مقطع رقم="١٣">وَٱعْلَمْ أَنَّ الْأَسْمَاْءَ الْمُبْهَمَةَ الَّتِي تُوْصَفُ بِالْأَسْمَاْءِ الَّتِي فِيْهَا الْأَلِفُ وَاللَّاْمُ تُنْزَلُ بِمَنْزِلَةِ  <حرف>أَيٍّ</حرف>
   </مقطع>
    <مقطع رقم="١٤">وَهِيَ  <حرف>هٰذَا</حرف>  وَ<حرف>هٰؤُلَاءِ</حرف>  وَ<حرف>أُوْلٰئِكَ</حرف>  وَمَا أَشْبَهَهَا وَتُوْصَفُ بِالْأَسْمَاْءِ</مقطع>
    <مقطع رقم="١٥">وَذٰلِكَ قَوْلُكَ <قول>يَا هٰذَا الرَّجُلُ</قول>
   </مقطع>
    <مقطع رقم="١٦">وَ<قول>يَا هٰذَانِ الرَّجُلانِ</قول>
   </مقطع>
    <مقطع رقم="١٧">صَاْرَ الْمُبْهَمُ وَمَا بَعْدَهُ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="١٨">وَلَيْسَ ذَا بِمَنْزِلَةِ قَوْلِكَ <قول>يَا زَيْدُ الطَّوِيْلُ</قول>
   </مقطع>
    <مقطع رقم="١٩">مِنْ قِبَلِ أَنَّكَ قُلْتَ <قول>يَا زَيْدُ</قول>
   </مقطع>
    <مقطع رقم="٢٠">وَأَنْتَ تُرِيْدُ أَنْ تَقِفَ عَلَيْهِ</مقطع>
    <مقطع رقم="٢١">ثُمَّ خِفْتَ أَنْ لَا يُعْرَفَ</مقطع>
    <مقطع رقم="٢٢">فَنَعَتَّهُ بِـ<حرف>الطَّوِيْلِ</حرف>
   </مقطع>
    <مقطع رقم="٢٣">وَإِذَا قُلْتَ <قول>يَا هٰذَا الرَّجُلُ</قول>
   </مقطع>
    <مقطع رقم="٢٤">فَأَنْتَ لَمْ تُرِدْ أَنْ تَقِفَ عَلَى  <حرف>هٰذَا</حرف>
   </مقطع>
    <مقطع رقم="٢٥">ثُمَّ تَصِفُهُ بَعْدَ مَا تَظُنُّ أَنَّهُ لَمْ يُعْرَفْ</مقطع>
    <مقطع رقم="٢٦">فَمِنْ ثُمَّ وَُصِفَتْ بِالْأَسْمَاْءِ الَّتِي فِيْهَا الْأَلِفُ وَاللَّاْمُ</مقطع>
    <مقطع رقم="٢٧">لِأَنَّهَا وَالْوَصْفُ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="٢٨">كَأَنَّكَ قُلْتَ <قول>يَا رَجُلُ</قول>
   </مقطع>
    <مقطع رقم="٢٩">فَهٰذِهِ الْأَسْمَاْءُ الْمُبْهَمَةُ إِذَا فَسَّرْتَهَا تَصِيْرُ بِمَنْزِلَةِ  <حرف>أَيٍّ</حرف>
   </مقطع>
    <مقطع رقم="٣٠">كَأَنَّكَ إِذَا أَرَدْتَ أَنْ تُفَسِّرَهَا لَمْ يَجُزْ لَكَ أَنْ تَقِفَ عَلَيْهَا</مقطع>
    <مقطع رقم="٣١">وَإِنَّمَا قُلْتَ <قول>يَا هٰذَا ذَا الْجُمَّةِ</قول> لِأنَّ <هارون مجلد="٢" صفحة="١٨٩"/>
        <حرف>ذَا الْجُمَّةِ</حرف>  لَا تُوْصَفُ بِهِ الْأَسْمَاْءُ الْمُبْهَمَةُ</مقطع>
    <مقطع رقم="٣٢">إِنَّمَا يَكُوْنُ بَدَلًا أَوْ عَطْفًا عَلَى الِٱسْمِ إِذَا أَرَدْتَ أَنْ تُؤَكِّدَ</مقطع>
    <مقطع رقم="٣٣">كَقَوْلِكَ <قول>يَا هٰؤُلَاءِ أَجْمَعُوْنَ</قول> وَإِنَّمَا أَكَّدْتَ حِيْنَ وَقَفْتَ عَلَى الِٱسْمِ</مقطع>
    <مقطع رقم="٣٤">وَالْأَلِفُ وَاللَّاْمُ وَالْمُبْهَمُ يَصِيْرَانِ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="٣٥">يَدُلُّكَ عَلَى ذٰلِكَ أَنَّ  <حرف>أَيُّ</حرف>  لَا يَجُوْزُ لَكَ فِيْهَا أَنْ تَقُوْلَ <قول>يَا أَيُّهَا ذَا الْجُمَّةِ</قول>
   </مقطع>
    <مقطع رقم="٣٦">فَالْأَسْمَاْءُ الْمُبْهَمَةُ تُوْصَفُ بِالْأَلِفِ وَاللَّاْمِ لَيْسَ إِلَّا</مقطع>
    <مقطع رقم="٣٧">وَيُفَسَّرُ بِهَا وَلَا تُوْصَفُ بِمَا يُوْصَفُ بِهِ غَيْرُ الْمُبْهَمَةِ</مقطع>
    <مقطع رقم="٣٨">وَلَا تُفَسَّرُ بِمَا يُفَسَّرُ بِهِ غَيْرُهُا إِلَّا عَطْفًا</مقطع>
    <مقطع رقم="٣٩">وَمِثْلُ ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ ابْنُ لَوْذَاْنَ السَّدوسِيِّ</مقطع>
    <شاهدة رقم="١" xml:id="١٤٧-١">
       <بيت>
          <مصراع>يَا صَاْحِ يَاْ ذَا الضَّاْمِرُ الْعَنْسِ</مصراع>
          <مصراع>وَالرَّحْلِ ذِي الأَنْسَاْعِ وَالْحِلْسِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٠">وَمِثْلُهُ قَوْلُ ابْنِ الْأَبْرَصِ <هارون مجلد="٢" صفحة="١٩٠"/>
   </مقطع>
    <شاهدة رقم="٢" xml:id="١٤٧-٢">
       <بيت>
          <مصراع>يَا ذَا الْمُخَوِّفُنَا بِمَقْتَلِ شَيْخِهِ</مصراع>
          <مصراع>حُجْرٍ تَمَنِّيَ صَاْحِبِ الأَحْلامِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤١">وَمِثْلُهُ <قول>يَاْ ذَا الْحَسَنُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٤٢">وَلَيْسَ ذَا بِمَنْزِلَةِ <قول>يَاْ ذَا ذَا الْجُمَّةِ</قول> مِنْ قِبَلِ أَنْ  <حرف>الضَّاْمِرَ الْعَنْسِ</حرف>  وَ<حرف>الْحَسَنَ الْوَجْهِ</حرف>  كَقَوْلِكَ <قول>يَا ذَا الضَّامِرُ</قول> وَ<قول>يَا ذَا الْحَسَنُ</قول>
   </مقطع>
    <مقطع رقم="٤٣">وَهٰذَا الْمَجْرُوْرُ ها هُنَا بِمَنْزِلَةِ الْمَنْصُوْبِ</مقطع>
    <مقطع رقم="٤٤">إِذَا قُلْتَ <قول>يَاْ ذَا الْحَسَنُ الْوَجْهَ</قول>
   </مقطع>
    <مقطع رقم="٤٥">وَ<قول>يَاْ ذَا الْحَسَنُ وَجْهًا</قول>
   </مقطع>
    <مقطع رقم="٤٦">وَيَدُلُّكَ عَلَى أَنَّهُ لَيْسَ بِمَنْزِلَةِ  <حرف>ذِي الْجُمَّةِ</حرف>  أَنَّ  <حرف>ذَا</حرف>  مَعْرِفَةٌ بِـ<حرف>الْجُمَّةِ</حرف>
   </مقطع>
    <مقطع رقم="٤٧">وَ<حرف>الضَّاْمِرُ</حرف>  وَ<حرف>الْحَسَنُ</حرف>  لَيْسَ وَاْحِدٌ مِنْهُمْا مَعْرِفَةً بِمَا بَعْدَهُ</مقطع>
    <مقطع رقم="٤٨">وَلٰكِنَّ مَا بَعْدَهُ تَفْسِيْرٌ لِمَوْضِعِ الضُّمُوْرِ وَالْحُسْنِ إِذَا أَرَدْتَ أَنْ لَا تُبْهِمَهُمَا</مقطع>
    <مقطع رقم="٤٩">فَكُلُّ وَاْحِدٍ مِنَ الْمَوَاْضِعِ مِنْ سَبَبِ الْأَوَّلِ لَا يَكُوْنَاْنِ إِلَّا كَذٰلِكَ</مقطع>
    <مقطع رقم="٥٠">فَإِذَا قُلْتَ  <حرف>الْحَسَنُ</حرف>  فَقَدْ عَمَّمْتَ</مقطع>
    <مقطع رقم="٥١">وَإِذَا قُلْتَ  <حرف>الْوَجْهِ</حرف>  فَقَدِ اخْتِصَصْتَ مِنْهُ</مقطع>
    <مقطع رقم="٥٢">وَإِذَا قُلْتَ  <حرف>الضَّاْمِرُ</حرف>  فَقَدْ عَمَّمْتَ</مقطع>
    <مقطع رقم="٥٣">وَإِذَا قُلْتَ  <حرف>الْعَنْسِ</حرف>  فَقَدِ اخْتَصَصْتَ شَيْئًا مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٥٤">كَمَا اخْتَصَصْتَ مَا كَاْنَ مِنْهُ وَكَأَنَّ الْعَنْسَ شَيْءٌ مِنْهُ</مقطع>
    <مقطع رقم="٥٥">فَصَاْرَ هٰذَا تَبْيِيْنًا لِمَوْضِعِ مَا ذَكَرْتَ</مقطع>
    <مقطع رقم="٥٦">كَمَا صَاْرَ الـ<حرف>دِّرْهَمُ</حرف>  يُبَيَّنُ بِهِ مِمَّ الْعِشْرُوْنَ حِيْنَ قُلْتَ  <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
   </مقطع>
    <مقطع رقم="٥٧">وَلَوْ قُلْتَ <قول>يَا هٰذَا الْحَسَنَ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٥٨">لَقُلْتَ <قول>يَا هٰؤُلَاءِ الْعِشْرِيْنَ رَجُلًا</قول> وَهٰذَا بَعِيْدٌ</مقطع>
    <مقطع رقم="٥٩">فَإِنَّمَا هُوَ بِمَنْزِلَةِ الْفِعْلِ إِذَا قُلْتَ <قول>يَا هٰذَا الضَاْرِبُ [ زَيْدًا</قول> وَ<قول>يَا هٰذَا الضَاْرِبُ ] الرَّجُلَ</قول>
   </مقطع>
    <مقطع رقم="٦٠">كَأَنَّكَ قُلْتَ <قول>يَا هٰذَا الضَاْرِبُ</قول> وَذَكَرْتَ مَا بَعْدَهُ لِتُبَيِّنَ مَوْضِعَ الضَّرْب وَلَا تُبْهِمُهُ</مقطع>
    <مقطع رقم="٦١">وَلَمْ يُجْعَلْ مَعْرِفَةً بِمَا بَعْدَهُ</مقطع>
    <مقطع رقم="٦٢">وَمَنْ ثَمَّ كَاْنَ الْخَلِيْلُ يَقُوْلُ <قول>يَا زَيْدُ الْحَسَنُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٦٣">قَاْلَ هُوَ بِمَنْزِلَةِ قَوْلِكَ <قول>يَا زَيْدُ الْحَسَنُ</قول>
   </مقطع>
    <مقطع رقم="٦٤">وَلَوْ لَمْ يَجُزْ فِيْمَا بَعْدَ  <حرف>زَيْدٍ</حرف>  الرَّفْعُ لَمَا جَاْزَ فِي هٰذَا</مقطع>
    <مقطع رقم="٦٥">كَمَا أَنَّهُ إِذَا لَمْ يَجُزْ <قول>يَا زَيْدُ ذُو الْجُمَّةِ</قول> لَمْ يَجُزْ <قول>يَا هٰذَا ذُو الْجُمَّةِ</قول>
   </مقطع>
    <هارون مجلد="٢" صفحة="١٩١"/>
    <مقطع رقم="٦٦">وَقَاْلَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ إِذَا قُلْتَ <قول>يَا هٰذَا</قول> وَأَنْتَ تُرِيْدُ أَنْ تَقِفَ عَلَيْهِ ثُمَّ تُؤَكِّدَهُ بِٱسْمٍ يَكُوْنُ عَطْفًا عَلَيْهِ</مقطع>
    <مقطع رقم="٦٧">فَأَنْتَ فِيْهِ بِالْخِيَاْرِ إِنْ شِئْتَ رَفَعْتَ وَإِنْ شِئْتَ نَصَبْتَ</مقطع>
    <مقطع رقم="٦٨">وَذٰلِكَ قَوْلُكَ <قول>يَا هٰذَا زَيْدٌ</قول> إِنْ شِئْتَ قُلْتَ  <حرف>زَيْدًا</حرف>
   </مقطع>
    <مقطع رقم="٦٩">يَصِيْرُ كَقَوْلِكَ <قول>يَا تَمِيْمُ أَجْمَعُوْنَ</قول> وَ<حرف>أَجْمَعِيْنَ</حرف>
   </مقطع>
    <مقطع رقم="٧٠">وَكَذٰلِكَ <قول>يَا هٰذَانِ زَيْدٌ وَعَمْرٌو</قول>
   </مقطع>
    <مقطع رقم="٧١">وَإِنْ شِئْتَ قُلْتَ  <حرف>زَيْدًا وَعَمْرًا</حرف>  فَتُجْرِي مَا يَكُوْنُ عَطْفًا عَلَى الِٱسْمِ مُجْرَى مَا يَكُوْنُ وَصْفًا</مقطع>
    <مقطع رقم="٧٢">نَحْوُ قَوْلِكَ <قول>يَا زَيْدُ الطَّوِيْلُ</قول> وَ<قول>يَا زَيْدُ الطَّوِيْلَ</قول>
   </مقطع>
    <مقطع رقم="٧٣">وَزَعَمَ لِي بَعْضُ الْعَرَبِ أَنَّ <قول>يَا هٰذَا زَيْدٌ</قول> كَثِيْرٌ فِي كَلَامِ طَيِّىءٍ</مقطع>
    <مقطع رقم="٧٤">وَيُقَوِّي <قول>يَا زَيْدُ الْحَسَنُ الْوَجْهِ</قول> وَلَا تَلْتَفِتْ فِيْهِ إِلَى الطُوْلِ</مقطع>
    <مقطع رقم="٧٥">أَنَّكَ لَا تَسْتَطِيْعُ أَنْ تَنَاْدِيْهِ فَتَجْعَلَهُ وَصْفًا مِثْلَهُ مُنَاْدًى</مقطع>
    <مقطع رقم="٧٦">وَٱعْلَمْ أَنَّ هٰذِهِ الصِّفَاْتِ الَّتِي تَكُوْنُ وَالْمُبْهَمَةَ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="٧٧">إِذَا وُصِفَتْ بِمُضَاْفٍ أَوْ عَطْفٍ عَلَى شَيْءٍ مِنْهُا كَاْنَ رَفْعًا مِنْ قِبَلِ أَنَّهُ مَرْفُوْعٌ غَيْرُ مُنَاْدًى</مقطع>
    <مقطع رقم="٧٨">وَاْطَّرَدَ الرَّفْعُ فِي صِفَاْتِ هٰذِهِ الْمُبْهَمَةِ</مقطع>
    <مقطع رقم="٧٩">كَاطِّرَاْدِ الرَّفْعِ فِي صِفَاْتِهَا إِذَا ارْتَفَعَتْ بِفِعْلٍ أَوِ ابْتِدَاْءٍ أَوْ تُبْنَى عَلَى مُبْتَدَإٍ</مقطع>
    <مقطع رقم="٨٠">فَصَاْرَتْ بِمَنْزِلَةِ صِفَاْتِهَا إِذَا كَاْنَتْ فِي هٰذِهِ الْحَاْلِ</مقطع>
    <مقطع رقم="٨١">كَمَا أَنَّ الَّذِيْنَ قَاْلُوْا <قول>يَا زَيْدُ الطَّوِيْلُ</قول> جَعَلُوْا  <حرف>زَيْدًا</حرف>  بِمَنْزِلَةِ مَا يَرْتَفِعُ بِهٰذِهِ الْأَشْيَاْءِ الثَّلاْثَةِ</مقطع>
    <مقطع رقم="٨٢">فَمِنْ ذٰلِكَ قَوْل الشَّاْعِرِ</مقطع>
    <شاهدة رقم="٣" xml:id="١٤٧-٣">
       <بيت>
          <مصراع>يَا أَيُّهَا الجَاْهِلُ ذُو التَّنزِّي</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="١٩٢"/>
    <مقطع رقم="٨٣">وَتَقُوْلُ <قول>يَا أَيُّهَا الرَّجُلُ زَيْدٌ أَقْبِلْ</قول>
   </مقطع>
    <مقطع رقم="٨٤">وَإِنَّمَا تُنَوِّنُ لِأَنَّهُ مَوْضِعٌ يَرْتَفِعُ فِيْهِ الْمُضَاْفُ</مقطع>
    <مقطع رقم="٨٥">وَإِنَّمَا يُحْذَفُ مِنْهُ التَّنْوِيْنُ إِذَا كَاْنَ فِي مَوْضِعٍ يَنْتَصِبُ فِيْهِ الْمُضَاْفُ</مقطع>
    <مقطع رقم="٨٦">وَتَقُوْلُ <قول>يَا زَيْدُ الطَّوِيْلُ ذُو الْجُمَّةِ</قول> إِذَا جَعَلْتَهُ صِفَةً لِلطَّوِيْلِ وَإِنْ حَمَلْتَهُ عَلَى  <حرف>زَيْدٍ</حرف> نَصَبْتَ</مقطع>
    <مقطع رقم="٨٧">فَإِذَا قُلْتَ <قول>يَا هٰذَا الرَّجُلُ</قول> فَأَرَدْتَ أَنْ تَعْطِفَ  <حرف>ذَا الْجُمَّةِ</حرف>  عَلَى  <حرف>هٰذَا</حرف>
   </مقطع>
    <مقطع رقم="٨٨">جَاْزَ فِيْهِ النَّصْبُ وَلَا يَجُوْزُ ذٰلِكَ فِي  <حرف>أَيٍّ</حرف>  لِأَنَّهُ لَا تَعْطِفُ عَلَيْهِ الْأَسْمَاْءَ</مقطع>
    <مقطع رقم="٨٩">أَلَا تَرَى أَنَّكَ لَا تَقُوْلُ <قول>يَا أَيُّهَا ذَا الْجُمَّةِ</قول> فَمِنْ ثَمَّ لَمْ يَكُنْ مِثْلَهُ</مقطع>
    <مقطع رقم="٩٠">وَأَمَّا قَوْلُكَ <قول>يَا أَيُّهَا ذَا الرَّجُلُ</قول> فَإِنَّ  <حرف>ذَا</حرف>  وَصْفٌ لِـ<حرف>أَيٍّ</حرف></مقطع>
    <مقطع>كَمَا كَاْنَ الْأَلِفُ وَاللَّاْمُ وَصْفًا لِأَنَّهُ مُبْهَمٌ مِثْلَهُ</مقطع>
    <مقطع رقم="٩١">فَصَاْرَ صِفَةً لَهُ كَمَا صَاْرَ الْأَلِفُ وَاللَّاْمُ وَمَا أُضِيْفَ إِلَيْهِمَا صِفَةً لِلأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع رقم="٩٢">وَذٰلِكَ نَحْوُ قَوْلِكَ <قول>مَرَرْتُ بِالْحَسَنِ الْجَمِيْلِ وَبِالْحَسَنِ ذِي الْمَاْلِ</قول>
   </مقطع>
    <مقطع رقم="٩٣">وَقَاْلَ ذُو الرُّمَّةِ</مقطع>
    <شاهدة رقم="٤" xml:id="١٤٧-٤">
       <بيت>
          <مصراع>أَلا أَيُّهَا ذَا الْمَنْزِلُ الدَّاْرِسُ الَّذِي</مصراع>
          <مصراع>كَأَنَّكَ لَمْ يَعْهَدْ بِكَ الَحَيَّ عَاهِدُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٩٤">وَمَنْ قَاْلَ <قول>يَا زَيْدُ الطَّوِيْلَ</قول> قَاْلَ  <حرف>ذَا الْجُمَّةِ</حرف>
   </مقطع>
    <مقطع رقم="٩٥">لَا يَكُوْنُ فِيْهِ غَيْرُ ذٰلِكَ إِذَا جَاْءَ بِهَا مِنْ بَعْدِ  <حرف>الطَّوِيْلِ</حرف>
   </مقطع>
    <مقطع رقم="٩٦">وَإِنْ رَفَعَ  <حرف>الطَّوِيْلَ</حرف>  وَبَعْدَهُ  <حرف>ذُو الْجُمَّةِ</حرف>  كَاْنَ فِيْهِ الْوَجْهَاْنِ</مقطع>
    <مقطع رقم="٩٧">وَتَقُوْلُ <قول>يَا زَيْد النَّاْكِي الْعَدُوَّ وَذَا الْفَضْلِ</قول>
   </مقطع>
    <مقطع رقم="٩٨">إِنْ حَمَلْتَ  <حرف>ذَا الْفَضْلِ</حرف>  عَلَى  <حرف>زَيْدٍ</حرف>  نَصَبْتَ لِأَنَّهُ وَصْفٌ لِمُنَاْدًى وَهُوَ مُضَاْفٌ</مقطع>
    <مقطع رقم="٩٩">وَإِنْ حَمَلْتَهُ عَلَى غَيْر  <حرف>زَيْدٍ</حرف>  انْتَصَبَ عَلَى  <حرف>يَا</حرف>
   </مقطع>
    <مقطع رقم="١٠٠">[ كَأَنَّكَ قُلْتَ <قول>وَيَاْ ذَا الْفَضْلِ</قول>]</مقطع>
