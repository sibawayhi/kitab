  <عنوان>
    <مقطع هوية='٠٢٩٧٦'>هٰذَا بَاْبُ مَا يَنْتَصِبُ لِأَنَّهُ حَاْلٌ يَقَعُ فِيْهِ الْأَمْرُ وَهُوَ اسْمٌ</مقطع>
  </عنوان>

  <مقطع هوية='٠٩١٠٨'>وَذٰلِكَ قَوْلُكَ <قول هوية='٨٧٠٣١'>مَرَرْتُ بِهِمْ جَمِيْعًا</قول> وَ<حرف>عَاْمَّةً</حرف> وَ<حرف>جَمَاْعَةً</حرف></مقطع>
  <!-- <أصل>جَمِيْعًا</أصل> <وْ/><بدل>عَاْمَّةً</بدل> <وْ/><بدل>جَمَاْعَةً</بدل></قول></مقطع> -->
  <مقطع هوية='٤٥٤٣٣'>كَأَنَّكَ قُلْتَ <قول هوية='٠٣٥٧٣'>مَرَرْتُ بِهِمْ قِيَاْمًا</قول></مقطع>
  <مقطع هوية='٧٨٨٩٩'>وَإِنَّمَا فَرَقْنَا بَيْنَ هٰذَا الْبَاْبِ وَالْبَاْبِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٤٢٨٠٩'>لِأَنَّ الـ<حرف>جَمِيْعَ</حرف> وَ<حرف>عَاْمَّةً</حرف> اسْمَاْنِ مُتَصَرِّفَاْنِ</مقطع>
  <مقطع هوية='٢٧٤٦٥'>تَقُوْلُ <قول هوية='٤٤٤٦٢'>كَيْفَ عَاْمَّتُكُمْ</قول></مقطع>
  <مقطع هوية='٢٩٣٧٦'>وَ<قول هوية='٩٣٢٦٣'>هٰؤُلَاْءِ قَوْمٌ جَمِيْعٌ</قول></مقطع>
  <مقطع هوية='٤٢٣٥٩'>فَإِذَا كَاْنَ الِاْسْمُ حَاْلًا يَكُوْنُ فِيْهِ الْأَمْرُ</مقطع>
  <مقطع هوية='٢١٣٥٥'>لَمْ تَدْخُلْهُ الْأَلِفُ وَاللَّاْمُ وَلَمْ يُضَفْ</مقطع>
  <مقطع هوية='٩٢٣٦٨'>لَوْ قُلْتَ <قول هوية='٥٢٦٧٨'>ضَرَبْتُهُ القَاْئِمَ</قول> تُرِيْدُ <حرف>قَاْئِمًا</حرف> كَاْنَ قَبِيْحًا</مقطع>
  <مقطع هوية='٩٩٥٠٥'>وَلَوْ قُلْتَ <قول هوية='٩٥٥٦٠'>ضَرَبْتُهُمْ قَاْئِمِيْهِمْ</قول> تُرِيْدُ <حرف>قَاْئِمِيْنَ</حرف> كَاْنَ قَبِيْحًا خَبِيْثًا</مقطع>

  <مقطع هوية='٢٩٣٣٨'>فَلَمَّا كَاْنَ كَذٰلِكَ جَعَلُوْا مَا أُضِيْفَ وَنُصِبَ نَحْوَ <حرف>خَمْسَتَهُمْ</حرف>
  بِمَنْزِلَةِ <حرف>طَاْقَتَهُ</حرف> وَ<حرف>جَهْدَهُ</حرف> وَ<حرف>وَحْدَهُ</حرف></مقطع>
  <مقطع هوية='٤٣٦٣٨'>وَجَعَلُوْا <حرف>الجَمَّاْءَ الغَفِيْرَ</حرف> بِمَنْزِلَةِ <حرف>العِرَاْكَ</حرف></مقطع>
  <مقطع هوية='٠٥٧٦٥'>وَجَعَلُوْا <حرف>قَاْطِبَةً</حرف> وَ<حرف>طُرًّا</حرف> إِذَا لَمْ يَكُوْنَا اسْمَيْنِ بِمَنْزِلَةِ <حرف>الجَمِيْعِ</حرف> وَ<حرف>عَاْمَّةٍ</حرف></مقطع>
  <مقطع هوية='١٣٨٨٢'>كَقَوْلِكَ <حرف>كِفَاْحًا</حرف> وَ<حرف>مُكَاْفَحَةً</حرف> وَ<حرف>فُجَاْءَةً</حرف></مقطع>
  <مقطع هوية='٣٣٨١١'>فَجُعِلَتْ هٰذِهِ كَالْمَصَاْدِرِ الْمَعْرُوْفَةِ الْبَيِّنَةِ</مقطع>
  <مقطع هوية='٣١٢١٧'>كَمَا جَعَلُوْا <حرف>عَلَيْكَ</حرف> وَ<حرف>رُوَيْدَكَ</حرف> كَالْفِعْلِ الْمُتَمَكِّنِ</مقطع>
  <مقطع هوية='٥٦٢٣٦'>وَكَمَا جَعَلُوْا <حرف>سُبْحَاْنَ اللهِ</حرف> وَ<حرف>لَبَّيْكَ</حرف> بِمَنْزِلَةِ <حرف>حَمْدًا</حرف> وَ<حرف>سَقْيًا</حرف></مقطع>
  <مقطع هوية='٣١٢٩٧'>فَهٰذَا تَفْسِيْرُ الْخَلِيْلِ رَحِمَهُ اللهُ وَقَوْلُهُ</مقطع>
  <مقطع هوية='٧٩١٧٧'>وَزَعَمَ يُوْنُسُ أَنَّ <حرف>وَحْدَهُ</حرف>
  بِمَنْزِلَةِ <حرف>عِنْدَهُ</حرف></مقطع>
  <مقطع هوية='٤٤٢٥٣'>وَأَنَّ <حرف>خَمْسَتَهُمْ</حرف> وَ<حرف>الْجَمَّاْءَ الْغَفِيْرَ</حرف>
  وَ<حرف>قَضَّهُمْ</حرف> كَقَوْلِكَ <حرف>جَمِيْعًا</حرف> وَ<حرف>عَاْمَّةً</حرف></مقطع>
  <مقطع هوية='٩٦٣٧٧'>وَكَذٰلِكَ <حرف>طُرًّا وَقَاْطبِةً</حرف>
  بِمَنْزِلَةِ <حرف>وَحْدَهُ</حرف></مقطع>
  <مقطع هوية='٥٧٢٢٩'>وَجَعَلَ الْمُضَاْفَ بِمَنْزِلَةِ <قول هوية='٩٤٨٣٧'>كَلَّمْتُهُ فَاْهُ إِلَى فِيَّ</قول></مقطع>
  <مقطع هوية='٥٩٧٧٧'>وَلَيْسَ مِثْلَهُ لِأَنَّ الْآخِرَ هُوَ الْأَوَّلُ عِنْدَ يُوْنُسَ فِي الْمَسْأَلَةِ الْأُوْلَى</مقطع>
  <مقطع هوية='٥٢٣٥٦'>وَ<حرف>فَاْهُ إِلَى فِيَّ</حرف> هٰهُنَا غَيْرُ الْأَوَّلِ</مقطع>
  <مقطع هوية='٣١٢٦٢'>وَأَمَّا <حرف>طُرًّا وَقَاْطِبَةً</حرف>
  فَأَشْبَهُ بِذٰلِكَ</مقطع>
  <مقطع هوية='٠٢٩٤٧'>لِأَنَّهُ جَيِّدٌ أَنْ يَكُوْنَ حَاْلًا غَيْرُ الْمَصْدَرِ نَكِرَةً</مقطع>
  <مقطع هوية='٧٢٩٨٩'>وَالَّذِي نَأْخُذُ بِهِ الْأَوَّلُ</مقطع>
  <مقطع هوية='٥٣٠٧٥'>وَأمَّا <حرف>كُلُّهُمْ</حرف> وَ<حرف>جَمِيْعُهُمْ</حرف>
  وَ<حرف>أَجْمَعُوْنَ</حرف> وَ<حرف>عَاْمَّتُهُمْ</حرف> وَ<حرف>أَنْفُسُهُمْ</حرف></مقطع>
  <مقطع هوية='١٤٦٢٠'>فَلا يَكُنَّ أَبَدًا إِلَّا صِفَةً</مقطع>
  <مقطع هوية='٠٩٨٥٥'>وَتَقُوْلُ <قول هوية='٥٩٠٢٣'>هُوَ نَسِيْحُ وَحْدِهِ</قول></مقطع>
  <مقطع هوية='٤٥٤٨٦'>لِأَنَّهُ اسْمٌ مُضَاْفٌ إِلَيْهِ بِمَنْزِلَةِ <حرف>نَفْسِهِ</حرف></مقطع>
  <مقطع هوية='٧٨٧٥٢'>إِذَا قُلْتَ <قول هوية='٠٠٠٢٥'>هٰذَا جُحَيْشُ وَحْدِهِ</قول></مقطع>
  <مقطع هوية='٤٩٨٤٨'>وَجَعَلَ يُوْنُسُ نَصْبَ <حرف>وَحْدَهُ</حرف>
  كَأَنَّكَ قُلْتَ <قول هوية='٨٤٨٤٤'>مَرَرْتُ بِرَجُلٍ عَلَى حِيَاْلِه</قول></مقطع>
  <مقطع هوية='٥١٦٩٥'>فَطَرَحْتَ <حرف>عَلَى</حرف></مقطع>
  <مقطع هوية='٢٧١١٦'>فَمِنْ ثَمَّ قَاْلَ هُوَ مِثْلُ <حرف>عِنْدَهُ</حرف></مقطع>
  <مقطع هوية='٤٣٥٥١'>وَهُوَ عِنْدَ الْخَلِيْلِ كَقَوْلِكَ <قول هوية='٧٥٥١٦'>مَرَرْتُ بِهِ خُصُوْصًا</قول></مقطع>
  <مقطع هوية='١٢٠٠٢'>وَ<قول هوية='٦٨٩٩٥'>مَرَرْتُ بِهِمْ خَمْسَتَهُمْ</قول> مِثْلُهُ</مقطع>
  <مقطع هوية='٣٠٦٨١'>وَمِثْلُ قَوْلِكَ <قول هوية='٤٢٧١٠'>مَرَرْتُ بِهِمْ عَمًّا</قول></مقطع>
  <مقطع هوية='١٢٤٤١'>وَلا يَكُوْنُ مِثْلَ <حرف>جَمِيْعًا</حرف> لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٩٤٦٧١'>وَصَاْرَ <حرف>وَحْدَهُ</حرف> بِمَنْزِلَةِ <حرف>خَمْسَتَهُمْ</حرف></مقطع>
  <مقطع هوية='٠٠٩١١'>لِأَنَّهُ مَكَاْنَ قَوْلِكَ <قول هوية='٢٢٩٦٨'>مَرَرْتُ بِهِ وَاْحِدَهُ</قول></مقطع>
  <مقطع هوية='٦٢٣٥٠'>فَقَاْمَ <حرف>وَحْدَهُ</حرف> مَقَاْمَ <حرف>وَاْحِدَهُ</حرف></مقطع>
  <مقطع هوية='١٢٩١٦'>فَإِذَا قُلْتَ <حرف>وَحْدَهُ</حرف> فَكَأَنَّكَ قُلْتَ هٰذَا</مقطع>
