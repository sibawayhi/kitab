  <عنوان>
    <مقطع هوية='٢٩٤٣٢'>هٰذَا بَاْبُ أَسْمَاْءِ السُّوَرِ</مقطع>
  </عنوان>

  <مقطع هوية='٩٣٨٤٥'>تَقُوْلُ <قول هوية='٨٣٤١٨'>هٰذِهِ هُوْدٌ كَمَا تَرَى</قول></مقطع>
  <مقطع هوية='٢٤٢٤٥'>إِذَا أَرَدْتَ أَنْ تَحْذِفَ <حرف>سُوْرَةً</حرف>
  مِنْ قَوْلِكَ <قول هوية='١٢١٤٦'>هٰذِهِ سُوْرَةُ هُوْدٍ</قول></مقطع>
  <مقطع هوية='٩٠١٩٢'>فَيَصِيْرَ هٰذَا كَقَوْلِكَ <قول هوية='١١٠٢٥'>هٰذِهِ تَمِيْمٌ كَمَا تَرَى</قول></مقطع>
  <مقطع هوية='٦٥٣٢٠'>وَإِنْ جَعَلْتَ <حرف>هُوْدًا</حرف> اسْمَ السُّوْرَةِ لَمْ تَصْرِفْهَا</مقطع>
  <مقطع هوية='٩٢٦٩٢'>لِأَنَّهَا تَصِيْرُ بِمَنْزِلَةِ امْرَأَةٍ سَمَّيْتَهَا بِـ<حرف>عَمْرٍو</حرف></مقطع>
  <مقطع هوية='١٧٩٩٧'>وَالسُّوَرُ بِمَنْزِلَةِ النِّسَاْءِ وَالْأَرَضِيْنَ</مقطع>

  <مقطع هوية='٩٠١٢٢'>وَإِذَا أَرَدْتَ أَنْ تَجْعَلَ <آية هوية='٤٣٨٣٦' سورة="٥٤" آية="١">ٱقْتَرَبَتِ</آية> اسْمًا قَطَعْتَ الْأَلِفَ</مقطع>
  <مقطع هوية='١٦٦٢٤'>كَمَا قَطَعْتَ أَلِفَ <حرف>إِضْرِبْ</حرف>
  حِيْنَ سَمَّيْتَ بِهِ الرَّجُلَ</مقطع>
  <مقطع هوية='٠٥٤٠١'>حَتَّى يَصِيْرَ بِمَنْزِلَةِ نَظَاْئِرِهِ مِنَ الْأَسْمَاْءِ نَحْوَ <حرف>إِصْبَع</حرف></مقطع>

  <مقطع هوية='٧٥٣٣٧'>وَأَمَّا <حرف>نُوْحٌ</حرف> فَبِمَنْزِلَةِ <حرف>هُوْدٍ</حرف></مقطع>
  <مقطع هوية='٨٠٧١٥'>تَقُوْلُ <قول هوية='١٦٦٣٦'>هٰذِهِ نُوْحٌ</قول></مقطع>
  <مقطع هوية='٨٠٧٣٠'>إِذَا أَرَدْتَ أَنْ تَحْذِفَ <حرف>سُوْرَةً</حرف> مِنْ قَوْلِكَ <قول هوية='٧٤٤٤٩'>هٰذِهِ سَوْرَةُ نُوْحٍ</قول></مقطع>
  <مقطع هوية='٠٦٣٦٩'>وَمِمَّا يَدُلُّكَ عَلَى أَنَّكَ حَذَفْتَ <حرف>سَوْرَةً</حرف>
  قُوْلُهُمْ <قول هوية='٢٧٣٥٥'>هٰذِهِ الرَّحْمٰنُ</قول></مقطع>
  <مقطع هوية='٥٨٩٧٣'>وَلَا يَكُوْنُ هٰذَا أَبَدًا إِلَّا <!-- وَأَنْتَ تُرِيْدُ -->
  وَهُوَ يُرِيْدُ <حرف>سُوْرَةُ الرَّحْمٰنِ</حرف></مقطع>
  <مقطع هوية='٤٢٢٣٨'>وَقَدْ يَجُوْزُ أَنْ تَجْعَلَ <حرف>نُوْحَ</حرف> اسْمًا</مقطع>
  <مقطع هوية='٧٩٢٠٥'>وَيَصِيْرُ بِمَنْزِلَةِ امْرَأَةٍ سَمَّيْتَهَا بِـ<حرف>عَمْرٍو</حرف></مقطع>
  <مقطع هوية='٨٩٨٨٦'>وَإِنْ جَعَلْتَ <حرف>نُوْحَ</حرف> اسْمًا لَهَا لَمْ تَصْرِفْهُ</مقطع>

  <مقطع هوية='٢٢٠٨٥'>وَأَمَّا <حرف>حٓم</حرف> فَلَا يَنْصَرِفُ</مقطع>
  <مقطع هوية='٤٠٧٨٤'>جَعَلْتَهُ اسْمًا لِلسُّوْرَةِ أَوْ أَضَفْتُهُ إِلَيْهِ</مقطع>
  <مقطع هوية='٤٢٠٠٧'>لِأَنَّهُمْ أَنْزَلُوْهُ بِمَنْزِلَةِ اسْمٍ أَعْجَمِيٍّ نَحْوَ <حرف>هَاْبِيْلَ</حرف> وَ<حرف>قَاْبِيْلَ</حرف></مقطع>

  <مقطع هوية='١٥٨١٧'>وَقَاْلَ الشَّاْعِرُ وَهُوَ <شاعر>الْكُمَيْتُ</شاعر></مقطع>
  <شاهدة هوية='٨٧٧٢٦' شاعر="الْكُمَيْتُ">
    <بيت>
      <مصراع>وَجَدْنَا لَكُمْ فِي <ثبات>آلِ حَاْمِيْمَ</ثبات> آيَةً</مصراع>
      <مصراع>تَأَوَّلَهَا مِنَّا تَقِيٌّ وَمُعْرِبُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٠٤٥٨٢'>وَقَاْلَ <شاعر>الْحِمَّاْنِي</شاعر></مقطع>
  <شاهدة هوية='٨٧٩١٢' شاعر="الْحِمَّاْنِي">
    <بيت>
      <مصراع>أَوْ كُتُبًا بُيِّنَ مِنْ <ثبات>حَاْمِيْمَا</ثبات></مصراع>
      <مصراع>قَدْ عَلِمَتْ أَبْنَاْءُ إِبْرَاْهِيْمَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٩١٠٤٩'> وكَذٰلِكَ <حرف>يَاْسَيْنُ</حرف> وَ<حرف>طَاْسِيْنُ</حرف></مقطع>

  <مقطع هوية='٣٧٥١٥'>وَاعْلَمْ أَنَّهُ لَا يَجِيْءُ فِي كَلَاْمِهِمْ
  عَلَى بِنَاْءِ <حرف>حَاْمِيْمَ</حرف> وَ<حرف>يَاْسِيْنَ</حرف></مقطع>
  <مقطع هوية='٤٩٩٩٥'>وَإِنْ أَرَدْتَ فِي هٰذَا الْحِكَاْيَةَ تَرَكْتَهُ وَقْفًا عَلَى حَاْلِهِ</مقطع>
  <مقطع هوية='٣٧٣٠٥'>وَقَدْ قَرَأَ بَعْضُهُمْ
  <آية هوية='١٨٩٦٥' سورة="٣٦" آية="١">يٓس <نهاية آية="١"/> وَٱلْقُرْآنِ</آية></مقطع>
  <مقطع هوية='٨٥٤٣٤'>وَ<آية هوية='٩٢٩٥٠' سورة="٥٠" آية="١">قٓ ۚ وَٱلْقُرْآنِ</آية></مقطع>
  <مقطع هوية='٧٨٠١٣'>فَمَنْ قَاْلَ هٰذَا فَكَأَنَّهُ جَعَلَهُ اسْمًا أَعْجَمِيًّا</مقطع>
  <مقطع هوية='٧٣٤٥٦'>ثُمَّ قَاْلَ <قول هوية='٢٤٨٣٥'>أَذْكُرُ يَاْسَيْنَ</قول></مقطع>

  <مقطع هوية='٣٢٥٧١'>وَأَمَّا <!-- صَاْدَ --> <آية هوية='٣١٢٣٨' سورة="٣٨" آية="١">صٓ ۚ</آية></مقطع>
  <مقطع هوية='٠٣٣٠٤'>فَلَا تَحْتَاْجُ إِلَى أَنْ تَجْعَلَهُ اسْمًا أَعْجَمِيًّا</مقطع>
  <مقطع هوية='٣٤٨٤٩'>لِأَنَّ هٰذَا الْبِنَاْءَ وَالْوَزْنَ مِنْ كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='٦٢١٦٣'>وَلَكِنَّهُ يَجُوْزُ أَنْ يَكُوْنَ اسْمًا لِلسُّوْرَةِ فَلَا تَصْرِفُهُ</مقطع>

  <مقطع هوية='١٩٦٢٣'>وَيَجُوْزُ أَيْضًا أَنْ يَكُوْنَ <حرف>يَاْسِيْنُ</حرف> وَ<حرف>صَاْدُ</حرف> اسْمَيْنِ غَيْرَ مُتَمَكِّنَيْنِ</مقطع>
  <مقطع هوية='٥٩٥٩٤'>فَيَلْزَمَاْنِ الْفَتْحَ</مقطع>
  <مقطع هوية='٠٢٤٠٥'>كَمَا أَلْزَمْتَ الْأَسْمَاْءَ غَيْرَ الْمُتَمَكِّنَةِ الْحَرَكَاْتِ</مقطع>
  <مقطع هوية='٤٧١٧٨'>نَحْوَ <حرف>كَيْفَ</حرف> وَ<حرف>أَيْنَ</حرف> وَ<حرف>حَيْثُ</حرف> وَ<حرف>أَمْسِ</حرف></مقطع>

  <مقطع هوية='٣٣٤٨٨'>وَأَمَّا <آية هوية='٣٤٠٩٧' سورة="٢٦" آية="١">طسٓمٓ <نهاية آية="١"/></آية></مقطع>
  <مقطع هوية='١٩٢٠٨'>فَإِنْ جَعَلْتَهُ اسْمًا لَمْ يَكُنْ لَكَ بُدٌّ</مقطع>
  <مقطع هوية='٢٨٨٣١'>مِنْ أَنْ تُحَرِّكَ النُّوْنَ وَتُصَيَّرَ مِيْمًا</مقطع>
  <مقطع هوية='٨٣٨٧١'>كَأَنَّكَ وَصَلْتَهَا إِلَى <حرف>طَاْسِيْنَ</حرف> فَجَعَلْتَهَا اسْمًا وَاْحِدًا</مقطع>
  <مقطع هوية='٩٥٧٥٩'>بِمَنْزِلَةِ <حرف>دَرَاْبَ جِرْدَ</حرف> وَ<حرف>بَعْلَبَكَّ</حرف></مقطع>
  <مقطع هوية='٠٦٣٢٩'>وَإِنْ شِئْتَ حَكَيْتَ وَتَرَكْتَ السَّوَاْكِنَ عَلَى حَاْلِهَا</مقطع>

  <مقطع هوية='٠٢٩٥٢'>وَأَمَّا
  <آية هوية='٩٤٨٦٥' سورة="١٩" آية="١">كٓهيعٓصٓ <نهاية آية="١"/></آية>
  وَ<آية هوية='٠١١٤٩' سورة="١٣" آية="١">الٓمٓـرۚ</آية></مقطع>
  <مقطع هوية='٢٤٣٠٤'>فَلَا يَكُنَّ إِلَّا حِكَاْيَةً</مقطع>
  <مقطع هوية='٦٦٨٨١'>وَإِنْ جَعَلْتَهَا بِمَنْزِلَةِ <حرف>طَاْسِيْنَ</حرف> لَمْ يَجُزْ</مقطع>
  <مقطع هوية='٦٥٣٩٧'>لِأَنَّهُمْ لَمْ يَجْعَلُوْا <حرف>طَاْسِيْنَ</حرف> كَـ<حرف>حَضْرَمَوْتَ</حرف></مقطع>
  <مقطع هوية='١٩٥٣٩'>وَلَكِنَّهُمْ جَعَلُوْهَا بِمَنْزِلَةِ <حرف>هَاْبِيْلَ</حرف>
  وَ<حرف>قَاْبِيْلَ</حرف> وَ<حرف>هَاْرُوْتَ</حرف></مقطع>
  <مقطع هوية='٢٦٦٢٥'>وَإِنْ قُلْتَ أَجْعَلُهَا بِمَنْزِلَةِ <حرف>طَاْسِيْن مِيْم</حرف> لَمْ يَجُزْ</مقطع>
  <مقطع هوية='٢٣٥٥٣'>لأَنَّكَ وَصَلْتَ مِيْمًا إِلَى <حرف>طَاْسِيْنَ</حرف></مقطع>
  <مقطع هوية='٨٣٦٩١'>وَلَا يَجُوْزُ أَنْ تَصِلَ خَمْسَةَ أَحْرُفٍ إِلَى خَمْسَةِ أَحْرُفٍ</مقطع>
  <مقطع هوية='٩١١٣٣'>فَتَجْعَلُهُنَّ اسْمًا وَاْحِدًا</مقطع>
  <مقطع هوية='٦٥٣٢٨'>وَإِنْ قُلْتَ <قبس>أَجْعَلُ الْكَاْفَ وَالْهَاْءَ اسْمًا</قبس></مقطع>
  <مقطع هوية='٢٤٤٢١'><قبس>ثُمَّ أَجْعَلُ الْيَاْءَ وَالْعَيْنَ اسْمًا</قبس></مقطع>
  <مقطع هوية='٣٩٨٣٢'><قبس>فَإِذَا صَاْرَا اسْمَيْنِ ضَمَمْتُ أَحَدَهُمَا إِلَى الْآخَرِ</قبس></مقطع>
  <مقطع هوية='٦٧٤١٤'><قبس>فَجَعَلْتُهُمَا كَاسْمٍ وَاْحِدٍ</قبس></مقطع>
  <مقطع هوية='١٧٤٣٩'>لَمْ يَجُزْ ذٰلِكَ</مقطع>
  <مقطع هوية='٢٣٨٦٦'>لِأَنَّهُ لَمْ يَجِئْ مِثْلَ <حرف>حَضْرَمَوْتَ</حرف>
  فِي كَلَاْمِ الْعَرَبِ مَوْصُوْلًا بِمِثْلِهِ</مقطع>
  <مقطع هوية='٣١٧٠٣'>وَهٰذَا أَبْعَدُ لِأَنَّكَ تُرِيْدُ أَنْ تَصِلَهُ بِالصَّاْدِ</مقطع>
  <مقطع هوية='٣٦٧٣٩'>فَإِنْ قُلْتَ <قبس>أَدَعُهُ عَلَى حَاْلِهِ
  وَأَجْعَلُهُ بِمَنْزِلَةِ <حرف>إِسْمَاْعِيْلَ</حرف></قبس></مقطع>
  <مقطع هوية='٩٩١٥٦'>لَمْ يَجُزْ لأَنَّ <حرف>إِسْمَاْعِيْلَ</حرف>
  قَدْ جَاْءَ عِدَّةُ حُرُوْفِهِ عَلَى عِدَّةِ حُرُوْفِ أَكْثَرِ الْعَرَبِيَّةِ</مقطع>
  <مقطع هوية='٢٥٩٧٦'>نَحْوَ <حرف>اشْهِيْبَاْبٍ</حرف></مقطع>
  <مقطع هوية='٨٣٧٤٣'>وَ<حرف>كهيعص</حرف> لَيْسَ عَلَى عِدَّةِ حُرُوْفِهِ شَىْءٌ</مقطع>
  <مقطع هوية='٤٧١٤٣'>وَلَا يَجُوْزُ فِيْهِ إِلَّا الْحِكَاْيَةُ</مقطع>

  <مقطع هوية='٩٦٠٠٧'>وَأَمَّا <آية هوية='٨٥٠٢١' سورة="٦٨" آية="١">نٓ ۚ</آية></مقطع>
  <مقطع هوية='٣٠٩٣٤'>فَيَجُوْزُ صَرْفُهَا فِي قَوْلِ مَنْ صَرَفَ <حرف>هِنْدًا</حرف></مقطع>
  <مقطع هوية='٠٥٣٧٩'>لِأَنَّ النُّوْنَ تَكُوْنُ أُنْثَى فَتُرْفَعُ وَتُنْصَبُ</مقطع>

  <مقطع هوية='٥٧٠٢٩'>ومِمَّا يَدُلُّ عَلَى أَنَّ <حرف>حَاْمِيْمَ</حرف> لَيْسَ مِنْ كَلَاْمِ الْعَرَبِ</مقطع>
  <مقطع هوية='٤٣٩٩٧'>أَنَّ الْعَرَبَ لَا تَدْرِي مَا مَعْنَى <حرف>حَاْمِيْمَ</حرف></مقطع>
  <مقطع هوية='٨٧٣٩٦'>وَإِنْ قُلْتَ <قبس>إِنَّ لَفْظَ حُرُوْفِهِ لَا يُشْبِهُ لَفْظَ حُرُوْفِ الْأَعْجَمِيِّ</قبس></مقطع>
  <مقطع هوية='٧٤٥٤٩'>فَإِنَّهُ قَدْ يَجِيْءُ الِاسْمُ هٰكَذَا وَهُوَ أَعْجَمِيٌ</مقطع>
