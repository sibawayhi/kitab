    <عنوان>
       <مقطع هوية='٦٠٩٨٨'>هٰذَا بَاْبُ مَا يَنْتَصِبُ فِي الْأَلِفِ</مقطع>
   </عنوان>
    <مقطع هوية='٩٠٠٤٦'>تَقُوْلُ <قول هوية='٨٣٧٦٩'>أَعَبْدَ اللهِ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع هوية='٤٥٥١٤'>وَ<قول هوية='٩١٥٨٦'>أَزَيْدًا مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع هوية='٢٣٤٨٣'>وَ<قول هوية='١٨٨٦١'>أَعَمْرًا قَتَلْتَ أَخَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٩٣٨٧٢'>وَ<قول هوية='٠١٣١٥'>أَعَمْرًا اشْتَرَيْتَ لَهُ ثَوْبًا</قول>
   </مقطع>
    <مقطع هوية='١٧١٧٧'>فَفِي كُلِّ هٰذَا قَدْ أَضْمَرْتَ بَيْنَ الْأَلِفِ وَالِاسْمِ فِعْلًا هٰذَا تَفْسِيْرُهُ</مقطع>
    <مقطع هوية='٧٥٩٣٧'>كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَصَبْتَهُ فِي هَذِهِ الْأَحْرُفِ فِي غَيْرِ الِاسْتِفْهَاْمِ</مقطع>
    <مقطع هوية='٨٤٥٤٠'>قَاْلَ جَرِيْرٌ</مقطع>

    <شاهدة هوية='٣٠٤٢٧'>
       <بيت>
          <مصراع><ثبات>أَثَعْلَبَةَ</ثبات> الْفَوَاْرِسَ أَمْ رِيَاْحًا</مصراع>
          <مصراع>عَدَلْتَ بِهِمْ طُهَيَّةَ وَالْخِشَاْبَا</مصراع>
      </بيت>
   </شاهدة>
   <مقطع هوية='٠٩٥٨٣'>فَإِذَا أَوْقَعْتَ عَلَيْهِ <!-- الْفِعْلَ -->
   أَوْ عَلَى شَيْءٍ مِنَ سَبَبِهِ فِعْلًا نَصَبْتَهُ</مقطع>
    <مقطع هوية='٠٢١٧٧'>وَتَفْسِيْرُهُ هٰهُنَا هُوَ التَّفْسِيْرُ الَّذِي فُسِّرَ فِي الِابْتِدَاْءِ</مقطع>
    <مقطع هوية='٥٨٦٠٠'>أَنَّكَ تُضْمِرُ فِعْلًا هٰذَا تَفْسِيْرُهُ</مقطع>
    <مقطع هوية='٧٣٧٩٧'>إِلَّا أَنَّ النَّصْبَ هُوَ الَّذِي يُخْتَاْرُ هٰهُنَا</مقطع>
    <مقطع هوية='٠٢٢٥٠'>وَهُوَ حَدُّ الْكَلَاْمِ</مقطع>
    <مقطع هوية='٢٣٩٨٤'>وَأَمَّا الاْنْتِصَاْبُ ثَمَّ وَهَاْهُنَا فَمِنْ وَجْهٍ وَاْحِدٍ</مقطع>
    <مقطع هوية='٨٥٦٥٠'>وَمِثْلُ ذٰلِكَ <قول هوية='٢٣٥٢٠'>أَعَبْدَ اللهِ كُنْتَ مِثْلَهُ</قول></مقطع>
    <مقطع هوية='٤٤٩٤٣'>لِأَنَّ <حرف>كُنْتَ</حرف> فِعْلٌ</مقطع>
    <مقطع هوية='٤٦٨٩٤'>وَالْـ<حرف>مِثْلُ</حرف> مُضَاْفٌ إِلَيْهِ وَهُوَ مَنْصُوْبٌ</مقطع>
    <مقطع هوية='٦٣٥٠٤'>وَمِثْلُهُ <قول هوية='٩٧٨٤٨'>أَزَيْدًا لَسْتَ مِثْلَهُ</قول>
   </مقطع>
    <مقطع هوية='٠٧٤٤٠'>لِأَنَّهُ فِعْلٌ</مقطع>
    <مقطع هوية='٦٧٨٠٥'>فَصَاْرَ بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٧٦٩٣٣'>أَزَيْدًا لَقِيْتَ أَخَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٥٧٤٦٩'>وَهُوَ قَوْلُ الْخَلِيْلِ</مقطع>
    <مقطع هوية='٧٢٢٩٨'>وَمِثْلُ ذٰلِكَ <قول هوية='١١٧٣٦'>مَا أَدْرِي أَزْيَدًا مَرَرْتُ بِهِ أَمْ عَمْرًا</قول>
   </مقطع>
    <مقطع هوية='٨٧٨٩٠'>وَ<قول هوية='١٩٥٥٧'>مَا أُبَاْلِي أَعَبْدَ اللهِ لَقِيْتُ أَخَاْهُ أَمْ عَمْرًا</قول>
   </مقطع>
   <مقطع هوية='٥٧٩٠٣'>لِأَنَّهُ حَرْفُ الِاسْتِفْهَاْمِ</مقطع>
   <مقطع هوية='٥٠٤٥٤'>وَهِى تِلْكَ الْأَلِفُ الَّتِي فِي قَوْلِكَ <قول هوية='٨٥٥٢٦'>أَزَيْدًا لَقِيْتَهُ أَمْ عَمْرًا</قول>
   </مقطع>
    <مقطع هوية='٩٩٢٦٥'>وَتَقُوْلُ <قول هوية='١٢٥٤٠'>أَعَبْدُ اللهِ ضَرَبَ أَخُوْهُ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٦٣٠٤٥'>لَا يَكُوْنُ إِلَّا الرَّفْعُ</مقطع>
    <مقطع هوية='٨٠٤٩٤'>لِأَنَّ الَّذِي مِنْ سَبَبِ  <حرف>عَبْدِ اللهِ</حرف>  مَرْفُوْعٌ فَاْعِلٌ</مقطع>
    <مقطع هوية='٠٦٢٣٩'>وَالَّذِى لَيْسَ مِنْ سَبَبِهِ مَفْعُوْلٌ</مقطع>
    <مقطع هوية='٦٣٧٧٩'>فَيْرَتَفِعُ إِذَا ارْتَفَعَ الَّذِي مِنْ سَبَبِهِ</مقطع>
    <مقطع هوية='٩٧٧١٥'>كَمَا يَنْتَصِبُ إِذَا انْتَصَبَ</مقطع>
    <مقطع هوية='٧٩٨١٥'>وَيَكُوْنُ الْمُضْمَرُ مَا يُرْفَعُ</مقطع>
    <مقطع هوية='٧١٤٤٦'>كَمَا أَضْمَرْتَ فِي الْأَوَّلِ مَا يُنْصَبُ</مقطع>
    <مقطع هوية='٤٧٨٢٤'>فَإِنَّمَا جُعِلَ هٰذَا الْمُظْهَرُ بَيَاْنَ مَا هُوَ مِثْلُهُ</مقطع>
    <مقطع هوية='٤٢٥٤٧'>فَإِنْ جَعَلْتَ <حرف>زَيْدًا</حرف> الْفَاْعِلَ</مقطع>
    <مقطع هوية='٠٧٩٥٨'>قُلْتَ <قول هوية='١٧٠٦٣'>أَعَبْدَ اللهِ ضَرَبَ أَخَاْهُ زَيْدٌ</قول></مقطع>
    <مقطع هوية='٦٩٧٠٩'>وَتَقُوْلُ <قول هوية='٢٢٥٥٨'>أَعَبْدُ اللهِ ضَرَبَ أَخُوْهُ غُلَاْمَهُ</قول>
   </مقطع>
   <مقطع هوية='٥٢٩٠٧'>إِذَا جَعَلْتَ الْـ<حرف>غُلَاْمَ</حرف>  فِي مَوْضِعِ  <حرف>زَيْدٍ</حرف></مقطع>
   <مقطع هوية='٦١٨٣٦'>حِيْنَ قُلْتَ <قول هوية='٦٨٠٢٣'>أَعَبْدُ اللهِ ضَرَبَ أَخُوْهُ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٣١٧٠٦'>فَيَصِيْرُ هٰذَا تَفْسِيْرًا لِشَيْءٍ رَفَعَ  <حرف>عَبْدَ اللهِ</حرف>
   </مقطع>
    <مقطع هوية='٣٠٣٦٢'>لِأَنَّهُ يَكُوْنُ مُوْقِعًا الْفِعْلَ بِمَا يَكُوْنُ مِنْ سَبَبِهِ</مقطع>
    <مقطع هوية='١٥٥١٥'>كَمَا يُوْقِعُهُ بِمَا لَيْسَ مِنْ سَبَبِهِ</مقطع>
    <مقطع هوية='٤٣٣٨٢'>كَأَنَّهُ قَاْلَ فِي التَّمْثِيْلِ وَإِنْ كَاْنَ لَا يُتَكَلَّمُ بِهِ <قول هوية='٧٤٦٥٨'>أَعَبْدُ اللهِ أَهَاْنَ غُلَاْمَهُ</قول>
   </مقطع>
    <مقطع هوية='٢٧٩٧٤'>أَوْ <قول هوية='٦٨٢١٠'>عَاْقَبَ غُلَاْمَهُ</قول>
   </مقطع>
    <مقطع هوية='٧٢٥٧٧'>أَوْ صَاْرَ فِي هَذِهِ الْحَاْلِ عِنْدَ السَّاْئِلِ وَإِنْ لَمْ يَكُنْ ثُمَّ فَسَّرَ</مقطع>
    <مقطع هوية='١٠٢٦٧'>وَإِنْ جَعَلْتَ الْـ<حرف>غُلَاْمَ</حرف>  فِي مَوْضِعِ  <حرف>زَيْدٍ</حرف>  حِيْنَ رَفَعْتَ  <حرف>زَيْدًا</حرف> نَصَبْتَ</مقطع>
    <مقطع هوية='٠١٨٢٦'>فَقُلْتَ <قول هوية='٢٣٧٧٤'>أَعَبْدَ اللهِ ضَرَبَ أَخَاْهُ غُلَاْمُهُ</قول>
   </مقطع>
    <مقطع هوية='٣٥٠٩٢'>كَأَنَّهُ جَعَلَهُ تَفْسِيْرًا لِفِعْلٍ غُلَاْمُهُ أَوْقَعَهُ عَلَيْهِ</مقطع>
    <مقطع هوية='١٦٢٣٢'>لِأَنَّهُ قَدْ يُوْقِعُ الْفِعْلَ عَلَيْهِ مَا هُوَ مِنْ سَبَبِهِ</مقطع>
    <مقطع هوية='٩٨١٨٢'>كَمَا يُوْقِعُهُ هُوَ عَلَى مَا هُوَ مِنْ سَبَبِهِ</مقطع>
    <مقطع هوية='٨٧٣٧٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤٧٢٧٧'>أَعَبْدُ اللهِ ضَرَبَ أَبَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٢١٥٨٤'>وَ<قول هوية='٩٢٣٦٦'>أَعَبْدَ اللهِ ضَرَبَهُ أَبُوْهُ</قول>
   </مقطع>
    <مقطع هوية='٩٣٦٦٧'>فَجَرَى مُجْرَى <قول هوية='٢٦١٦٦'>أَعَبْدُ اللهِ هُوَ ضَرَبَ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٤٥٤٢٦'>وَ<قول هوية='٠٠٥١٩'>أَعَبْدَ اللهِ ضَرَبَهُ زَيْدٌ</قول>
   </مقطع>
    <مقطع هوية='٤٦٥٦١'>كَأَنَّهُ فِي التَّمْثِيْلِ تَفْسِيْرٌ لِقَوْلِهِ <قول هوية='٢٥٩٥٠'>أَعَبْدَ اللهِ أَهَاْنَ أَبَاْهُ غُلَاْمُهُ</قول>
   </مقطع>
    <مقطع هوية='٣٢٢٧٣'>وَ<قول هوية='٨٤٣٧٦'>أَعَبْدَ اللهِ ضَرَبَ أَخَاْهُ غُلَاْمُهُ</قول>
   </مقطع>
    <مقطع هوية='٤٣٨١١'>وَلَا عَلَيْكَ أَقَدَّمْتَ الْـ<حرف>أَخَ</حرف>  أَمْ أَخَّرْتَهُ</مقطع>
    <مقطع هوية='٤٢٥٧٩'>أَمْ قَدَّمْتَ الْـ<حرف>غُلَاْمَ</حرف>  أَمْ أَخَّرْتَهُ</مقطع>
    <مقطع هوية='١٦٠٥٣'>أَيُّهُمَا مَا جَعَلْتَهُ كَـ<حرف>زَيْدٍ</حرف>  مَفْعُوْلًا فَاْلأَوَّلُ رَفْعٌ</مقطع>
    <مقطع هوية='٥٩٧٤٢'>وَإِنْ جَعَلْتَهُ كَـ<حرف>زَيْدٍ</حرف>  فَاْعِلًا فَاْلأَوَّلُ نَصَبٌ</مقطع>
    <مقطع هوية='٩٠٥١٩'>وَتَقُوْلُ <قول هوية='٨٩٢٢٥'>آلسَّوْطَ ضُرِبَ بِهِ زَيْدٌ</قول>
   </مقطع>
    <مقطع هوية='٨٤٩٦٥'>وَهُوَ كَقَوْلِكَ <قول هوية='٣٣٠٢٣'>آلسَّوْطَ ضُرِبْتَ بِهِ</قول>
   </مقطع>
   <مقطع هوية='٤٨٤٤١'>وَكَذٰلِكَ <قول هوية='٤٠٣١٩'>آلْخِوَاْنَ أُكِلَ اللَّحْمُ عَلَيْهِ</قول></مقطع>
    <مقطع هوية='٣٢٨٢٨'>وَكَذٰلِكَ <قول هوية='٦٩٧٨٠'>أَزَيْدًا سُمِّيْتَ بِهِ أَوْ سُمِّيَ بِهِ عَمْرٌو</قول>
   </مقطع>
    <مقطع هوية='٤٢٩٣٠'>لِأَنَّ هٰذَا فِي مَوْضِعِ نَصْبٍ</مقطع>
    <مقطع هوية='٥٢٥٨٣'>وَإِنَّمَا تَعْتَبِرُهُ أَنَّكَ لَوْ قُلْتَ <قول هوية='٧٨١٧٧'>آلسَّوْطَ ضُرِبْتَ</قول>
   </مقطع>
    <مقطع هوية='٨٤٩٤٥'>فَكَاْنَ هٰذَا كَلَاْمًا</مقطع>
    <مقطع هوية='١٥٩٠٩'>أَوْ <قول هوية='٦٨٤٣٠'>آلْخِوَاْنَ أَكَلْتَ</قول>
   </مقطع>
    <مقطع هوية='٠٧٧٨٤'>لَمْ يَكُنْ إِلَّا نَصْبًا</مقطع>
    <مقطع هوية='١٠٩٥٧'>كَمَا أَنَّكَ لَوْ قُلْتَ <قول هوية='١٧٩٢٥'>أَزَيْدًا مَرَرْتَ</قول>
   </مقطع>
    <مقطع هوية='٦٢٨٧٩'>فَكَاْنَ كَلَاْمًا لَمْ يَكُنْ إِلَّا نَصْبًا</مقطع>
    <مقطع هوية='٩١٦٩٧'>فَمِنْ ثَّمَّ جُعِلَ هٰذَا الْفِعْلُ الَّذِي لَا يَظْهَرُ تَفْسِيْرُهُ تَفُسِيْرَ مَا يَنْصِبُ</مقطع>
    <مقطع هوية='٥٧٦٥٧'>فَاْعْتَبِرْ مَا أُشْكِلَ عَلَيْكَ مِنْ هٰذَا بِذَا</مقطع>
    <مقطع هوية='٦١٦٨٠'>فَإِنَّ قُلْتَ <قول هوية='٣٩٥٧٥'>أَزَيْدٌ ذُهِبَ بِهِ</قول>
   </مقطع>
    <مقطع هوية='٦٠٩٥٤'>أَوْ <قول هوية='٥٨٥٠٣'>أَزَيْدٌ اُنْطُلِقَ بِهِ</قول>
   </مقطع>
    <مقطع هوية='٨١٣٤٧'>لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
    <مقطع هوية='٢٥٧١٩'>لِأَنَّكَ لَوْ لَمْ تَقُلِ  <حرف>بِهِ</حرف>  فَكَاْنَ كَلَاْمًا</مقطع>
    <مقطع هوية='٥٨٦٤٧'>لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
    <مقطع هوية='٧٥٨٩٧'>كَمَا قُلْتَ <قول هوية='٧٧٣٠٦'>أَزَيْدٌ ذَهَبَ أَخُوْهُ</قول>
   </مقطع>
   <مقطع هوية='٣٩٨٧٤'>لِأَنَّكَ لَوْ قُلْتَ <قول هوية='٤٩٩١٠'>أَزَيْدٌ ذَهَبَ</قول></مقطع>
   <مقطع هوية='٥١٩٧٦'>لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
    <مقطع هوية='٤٩٨٦٥'>وَتَقُوْلُ <قول هوية='٥٤٤٩٠'>أَزَيْدًا ضَرَبْتَ أَخَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٤٧١٢٥'>لِأَنَّكَ لَوْ أَلْقَيْتَ الْـ<حرف>أَخَ</حرف>  قُلْت <قول هوية='٥١٢٩٧'>أَزَيْدًا ضَرَبْتَ</قول>
   </مقطع>
    <مقطع هوية='٩٥٦٢٢'>فَاْعْتَبِرْ هٰذَا بِهٰذَا</مقطع>
    <مقطع هوية='٢٥٨٧٧'>ثُمَّ اجْعَلْ كُلَّ وَاْحِدٍ جِئْتَ بِهِ تَفْسِيْرَ مَا هُوَ مِثْلُهُ</مقطع>
    <مقطع هوية='١٧٠٣٧'>وَ <حرف>الْيَوْمُ</حرف>  وَالظُّرُوْفُ بِمَنْزِلَةِ  <حرف>زَيْدٍ</حرف> وَ<حرف>عَبْدِ اللهِ</حرف> إِذَا لَمْ يَكُنْ ظُرُوْفًا</مقطع>
    <مقطع هوية='١٤٦٩٥'>وَذٰلِكَ قَوْلُكَ <قول هوية='١٣٤٠٩'>أَيَوْمَ الْجُمْعَةِ يَنْطَلِقُ فِيْهِ عَبْدُ اللهِ</قول>
   </مقطع>
    <مقطع هوية='٥٦٧٨١'>كَقَوْلِكَ <قول هوية='٥٧٩٠٦'>أَعَمْرًا تَكَلَّمَ فِيْهِ عَبْدُ اللهِ</قول>
   </مقطع>
    <مقطع هوية='٨٥٣٢١'>وَ<قول هوية='٤٨٣٣٠'>أَيَوْمُ الْجُمُعَةِ يُنْطَلَقُ فِيْهِ</قول>
   </مقطع>
    <مقطع هوية='٦٠٨٧١'>كَقَوْلِكَ <قول هوية='١٣٧٨٩'>أَزَيْدٌ يُذْهَبُ بِهِ</قول>
   </مقطع>
    <مقطع هوية='٥٩٦٠٧'>وَتَقُوْلُ <قول هوية='٣٧١٩٠'>أَأَنْتَ عَبْدُ اللهِ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع هوية='٠١٤٩٣'>تُجْرِيْهِ هَاْهُنَا مُجْرَى <قول هوية='٤٠٣٠٨'>أَنَا زَيْدٌ ضَرَبْتُهُ</قول></مقطع>
    <مقطع هوية='٩٧٢٥٠'>لِأَنَّ الَّذِي يَلِي حَرْفَ الِاسْتِفْهَاْمِ <حرف>أَنْتَ</حرف></مقطع>
    <مقطع هوية='٣٠٢٢١'>ثُمَّ ابْتَدَأْتَ هٰذَا</مقطع>
    <مقطع هوية='٥١٥٧٣'>وَلَيْسَ قَبْلَهُ حَرْفُ اسْتِفْهَاْمٍ</مقطع>
    <مقطع هوية='٣٧٣٧٤'>وَلَاْشَيْءٍ هُوَ بِالْفِعْلِ وَتَقْدِيْمُهُ أَوْلَى</مقطع>
    <مقطع هوية='٥٧٩٢٧'>إِلَّا أَنَّكَ إِنْ شِئْتَ نَصَبْتَهُ</مقطع>
    <مقطع هوية='٩١٧١٣'>كَمَا تَنْصِبُ <قول هوية='٨٥٩٠٤'>زَيْدًا ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع هوية='٢٥٩١٨'>فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
    <مقطع هوية='٢٢١٧١'>وَأَمْرُهُ هَاْهُنَا عَلَى قَوْلِكَ <قول هوية='٩٩٩٣٣'>زَيْدٌ ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع هوية='٦٦٨٤٥'>فَإِنْ قُلْتَ <قول هوية='٢٢٢٨٥'>أَكُلَّ يَوْمٍ زَيْدًا تَضْرِبُهُ</قول> فَهُوَ نَصْبٌ</مقطع>
    <مقطع هوية='٠٧٦٣٨'>كَقَوْلِكَ <قول هوية='٤١٢٢٤'>أَزَيْدًا تَضْرِبُهُ كُلَّ يَوْمٍ</قول></مقطع>
    <مقطع هوية='٠٢٦٨٥'>لِأَنَّ الظَّرْفَ لَا يَفْصِلُ فِي قَوْلِكَ <قول هوية='٢٥٨٣٦'>مَا الْيَوْمَ زَيْدٌ ذَاْهِبًا</قول>
   </مقطع>
    <مقطع هوية='٣٤١٠٢'>وَ<قول هوية='١٢٢٩٤'>إِنَّ الْيَوْمَ عَمْرًا مُنْطَلِقٌ</قول>
   </مقطع>
    <مقطع هوية='٨٦٤٥٠'>فَلَا يَحْجُزُ هَاْهُنَا كَمَا لَا يَحْجُزُ ثَمَّةَ</مقطع>
    <مقطع هوية='٦٨٥٨٦'>وَتَقُوْلُ <قول هوية='٤٩٢٢٩'>أَعَبْدُ اللهِ أَخُوْهُ تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع هوية='٢٦٤٧٨'>كَمَا تَقُوْلُ <قول هوية='٧٤٥٦٥'>أَأَنْتَ زَيْدٌ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع هوية='٦٠٠٥٠'>لِأَنَّ الِاسْمَ هَاْهُنَا بِمَنْزِلَةِ مُبْتَدَإٍِ لَيْسَ قَبْلَهُ شَيْءٌ</مقطع>
    <مقطع هوية='٥١١٨٥'>وَإِنْ نَصَبْتَهُ عَلَى قَوْلِكَ <قول هوية='٣٢٠٤١'>زَيْدًا تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع هوية='٢٧٩٦٨'>قُلْتَ <قول هوية='٥٩٢٥٤'>أَزَيْدًا أَخَاْهُ تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع هوية='١٥٣٦٠'>لِأَنَّكَ نَصَبْتَ الَّذِي مِنْ سَبَبِهِ بِفِعْلٍ هٰذَا تَفْسِيْرُهُ</مقطع>
    <مقطع هوية='٩٤٦٨٢'>وَمَنْ قَاْلَ <قول هوية='١٨٥٩٨'>زَيْدًا ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع هوية='٠٧٥٩٥'>قَاْلَ <قول هوية='٥٠٨٧٥'>أَزَيْدًا أَخَاْهُ تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع هوية='٧٢٨٧٤'>فَإِنَّمَا نَصَبَ  <حرف>زَيْدًا</حرف>  لِأَنَّ أَلِفَ الِاسْتِفْهَاْمِ وَقَعَتْ عَلَيْهِ</مقطع>
    <مقطع هوية='٣٧٥٤٤'>وَالَّذِى مِنْ سَبَبِهِ مَنْصُوْبٌ</مقطع>
    <مقطع هوية='٦٧١٥٨'>وَقَدْ يَجُوْزُ الرَّفْعُ فِي <قول هوية='٦٢٧٩٣'>أَعَبْدُ اللهِ مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع هوية='٦٩٨١٣'>عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع هوية='٤٦٢٠٣'>وَ<قول هوية='٢٤٢٥٠'>أَعَبْدُ اللهِ ضَرَبْتَ أَخَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٢٢٠٧٤'>وَأَمَّا قَوْلُكَ <قول هوية='٩٠٠١١'>أَزَيْدًا مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع هوية='٧٩٦٤٠'>فَبِمَنْزِلِةِ قَوْلِكَ <قول هوية='٢٦٠٨٢'>أَزَيْدًا ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع هوية='٠٤٤١٥'>وَالرَّفْعُ فِي هٰذَا أَقْوَى مِنْهُ فِي <قول هوية='١٨٤١٥'>أَعَبْدُ اللهِ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع هوية='٩١٧٤٥'>وَهُوَ أَيْضًا قَدْ يَجُوْزُ إِذَا جَاْزَ هٰذَا</مقطع>
    <مقطع هوية='٦٠٤٦٢'>كَمَا كَاْنَ ذٰلِكَ فِيْمَا قَبْلَهُ مِنَ الْاْبْتِدَاْءِ</مقطع>
    <مقطع هوية='١٦٨٩٥'>وَمَا جَاْءَ بَعْدَ مَا بُنِيَ عَلَى الْفِعْلِ</مقطع>
    <مقطع هوية='٦١١٣٧'>وَذٰلِكَ أَنَّهُ ابْتَدَأَ <حرف>عَبْدَ اللهِ</حرف></مقطع>
    <مقطع هوية='٦٦٩٠٦'>وَجَعَلَ الْفِعْلَ فِي مَوْضِعِ الْمَبْنِيِّ عَلَيْهِ</مقطع>
    <مقطع هوية='١٠٦٧٢'>فَكَأَنَّهُ قَاْلَ <قول هوية='٥٠٠٨٥'>أَعَبْدُ اللهِ أَخُوْكَ</قول></مقطع>

    <مقطع هوية='٧٥٤١٥'>فَمَنْ زَعَمَ أَنَّهُ إِذَا قَاْلَ <قول هوية='٢٦٢٩٨'>أَزَيْدًا مَرَرْتَ بِهِ</قول> إِنَّمَا يَنْصِبُهُ بِهٰذَا الْفِعْلِ</مقطع>
    <مقطع هوية='٧٩٢٥٤'>فَهْوَ يَنْبَغِي لَهُ أَنْ يَجُرَّهُ</مقطع>
    <مقطع هوية='١٦٠٤٠'>لِأَنَّهُ لَا يَصِلُ إِلَّا بِحَرْفِ إِضَاْفَةٍ</مقطع>
    <مقطع هوية='٤٧٦٤٦'>وَإِذَا أَعْمَلَتِ الْعَرَبُ شَيْئًا مُضْمَرًا</مقطع>
    <مقطع هوية='٢٨٦٦٣'>لَمْ يَخْرُجْ عَنْ عَمَلِهِ مُظْهَرًا فِي الْجَرِّ وَالنَّصْبِ وَالرَّفْعِ</مقطع>
    <مقطع هوية='٤٦٤٤٩'>تَقُوْلُ <حرف>وَبَلَدٍ</حرف>
    تُرِيْدُ <حرف>وَرُبَّ بَلَدٍ</حرف></مقطع>

    <مقطع هوية='٧٧٤١١'>وَتَقُوْلُ <حرف>زَيْدًا</حرف>
    تُرِيْدُ <حرف>عَلَيْكَ زَيْدًا</حرف></مقطع>

    <مقطع هوية='٣١٣١٤'>وَتَقُوْلُ <حرف>الْهِلَاْلُ</حرف>
    تُرِيْدُ <حرف>هٰذَا الْهِلَاْلُ</حرف></مقطع>
    <مقطع هوية='٦٧٤٤٧'>فَكُلُّهُ يَعْمَلُ عَمَلَهُ مُظْهَرًا</مقطع>

    <مقطع هوية='٧١٩٠٤'>وَمِمَّا يَقْبُحُ بَعْدَهُ ابْتِدَاْءُ الْأَسْمَاْءِ</مقطع>
    <مقطع هوية='٩٠١٣٣'>وَيَكُوْنُ الْاْسْمُ بَعْدَهُ إِذَا أَوْقَعْتَ الْفِعْلَ عَلَى شَيْءٍ مِنْ سَبَبِهِ نَصْبًا فِي الْقِيَاْسِ</مقطع>
    <مقطع هوية='٩٥٣٥٨'><حرف>إِذَا</حرف> وَ<حرف>حَيْثُ</حرف></مقطع>
    <مقطع هوية='٠٤٥٨١'>تَقُوْلُ <قول هوية='٢٩٩٤٩'>إِذَا عَبْدَ اللهِ تَلْقَاْهُ فَأَكْرِمْهُ</قول>
   </مقطع>

    <مقطع هوية='٦٧٤٨٦'>وَ<قول هوية='٥٦٥٣٢'>حَيْثُ زَيْدًا تَجِدهُ فَأَكْرِمْهُ</قول>
   </مقطع>
    <مقطع هوية='٦١٤١٧'>لِأَنَّهُمَا يَكُوْنَاْنِ فِي مَعْنَى حُرُوْفِ الْمُجَاْزَاْةِ</مقطع>
    <مقطع هوية='٦٠٩٩٦'>وَيَقْبُحُ إِنِ ابْتَدَأْتَ الْاْسْمَ بَعْدَهُمَا إِذَا كَاْنَ بَعْدَهُ الْفِعْلُ</مقطع>
    <مقطع هوية='٧٧٧٦٣'>لَوْ قُلْتَ <قول هوية='٢٧٢٩١'>اجْلِسْ حَيْثُ زَيْدٌ جَلَسَ</قول>
   </مقطع>
    <مقطع هوية='٩٠٣٦٦'>وَ<قول هوية='٦١٣٩٤'>اجْلِسْ إِذَا زَيْدٌ يَجْلِسُ</قول>
   </مقطع>
   <مقطع هوية='٩٤٢٦٨'>كَاْنَ أَقْبَحَ مِنْ قَوْلِكَ <حرف>إِذَا جَلَسَ زَيْدٌ</حرف></مقطع>
   <مقطع هوية='٤٣٠٠٣'>وَ<حرف>إِذَا يَجْلِسُ</حرف></مقطع>
   <مقطع هوية='٢٧٤٣٩'>وَ<حرف>حَيْثُ يَجْلِسُ</حرف></مقطع>
   <مقطع هوية='٢٣٠٧٦'>وَ<حرف>حَيْثُ جَلَسَ</حرف></مقطع>
   <مقطع هوية='٠٩٦٦٧'>وَالرَّفْعُ بَعْدَهُمَا جَاْئِزٌ</مقطع>
   <مقطع هوية='٨٧٣٣٩'>لِأَنَّكَ قَدْ تَبْتَدِئُ بَعْدَهُمَا</مقطع>
   <مقطع هوية='٨٨٢٠٠'>فَتَقُوْلُ <قول هوية='٠٧٩٣٩'>اجْلِسْ حَيْثُ عَبْدُ اللهِ جَاْلِسٌ</قول>
   </مقطع>
    <مقطع هوية='٩٩٠٦٦'>وَ<قول هوية='٩٢٠٣٤'>اجْلِسْ إِذَا عَبْدُ اللهِ جَلَسَ</قول>
   </مقطع>
    <مقطع هوية='٢٨٨٧٢'>وَلَـ<حرف>إِذَا</حرف>  مُوْضِعٌ آخَرَ يَحْسُنُ ابْتِدَاْءُ الْاْسْمِ بَعْدَهَا فِيْهِ</مقطع>
    <مقطع هوية='٦٠٨٨٨'>تَقُوْلُ <قول هوية='١٠٣٩٩'>نَظَرْتُ فَإِذَا زَيْدٌ يَضْرِبُهُ عَمْرٌو</قول>
   </مقطع>
    <مقطع هوية='٤٧٥٢٤'>لِأَنَّكَ لَوْ قُلْتَ <قول هوية='٧٤٠٠٩'>نَظَرْتُ فَإِذَا زَيْدٌ يَذْهَبُ</قول> لَحَسُنَ</مقطع>
    <مقطع هوية='٣٤٦٢٢'>وَأَمَّا  <حرف>إِذْ</حرف>  فَيَحْسُنُ ابْتِدَاْءُ الْاْسْمِ بَعْدَهَا</مقطع>
    <مقطع هوية='١١٢٧٩'>تَقُوْلُ <قول هوية='٩٩٤٥٣'>جِئْتُ إِذْ عَبْدُ اللهِ قَاْئِمٌ</قول>
   </مقطع>
    <مقطع هوية='٢٢١٥٤'>وَ<قول هوية='١٤٩٧٣'>جِئْتُ إِذْ عَبْدُ اللهِ يَقُوْمُ</قول>
   </مقطع>
    <مقطع هوية='٠٠٤٠٠'>إِلَّا أَنَّهَا فِي  <حرف>فَعَلَ</حرف> قَبِيْحَةٌ</مقطع>
    <مقطع هوية='٤٣٩٨٠'>نَحْوُ قَوْلِكَ <قول هوية='١٠٨١٤'>جِئْتُ إِذْ عَبْدُ اللهِ قَاْمَ</قول>
   </مقطع>
    <مقطع هوية='٨٧٤٣٤'>وَلَكِنَّ  <حرف>إِذْ</حرف>  إِنَّمَا يَقَعُ فِي الْكَلَاْمِ الْوَاْجِبِ</مقطع>
    <مقطع هوية='٧٧٩٩٠'>فَاْجْتَمَعَ فِيْهَا هٰذَا وَأَنَّكَ تَبْتَدِئُ الاْمَ بَعْدَهَا</مقطع>
    <مقطع هوية='١٨٥٧١'>فَحَسَنَ الرَّفْعُ</مقطع>
    <مقطع هوية='٦٨٦٠٦'>وَمِمَّا يَنْتَصِبُ أَوَّلُهُ لِأَنَّ آخِرَهُ مُلْتَبِسٌ بِالْأَوَّلِ</مقطع>
    <مقطع هوية='٨٧٢٠٠'>قَوْلُهُ <قول هوية='٦٤٩٣١'>أَزَيْدًا ضَرَبْتَ عَمْرًا وَأَخَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٦٩٩٦٩'>وَ<قول هوية='٩٨٦٤٤'>أَزَيْدًا ضَرَبْتَ رَجُلًا يُحِبُّهُ</قول>
   </مقطع>
    <مقطع هوية='٦٢٣١٢'>وَ<قول هوية='٤٢١٢٨'>أَزَيْدًا ضَرَبْتَ جَاْرِيَتَيْنِ يُحِبُّهُمَا</قول>
   </مقطع>
    <مقطع هوية='٣٢٠٥٣'>فَإِنَّمَا نَصَبْتَ الْأَوَّلَ لِأَنَّ الْآخِرَ مُلْتَبِسٌ بِهِ</مقطع>
    <مقطع هوية='٧٠٤٤٤'>إِذْ كَاْنَتْ صِفَتُهُ مُلْتَبِسَةٌ بِهِ</مقطع>
    <مقطع هوية='٢٠٩٠٠'>وَإِذَا أَرَدْتَ أَنْ تَعْلَمَ الْتِبَاْسَهُ بِهِ</مقطع>
    <مقطع هوية='١٤٥٢٧'>فَاْدْخُلْهُ فِي الْبَاْبِ الَّذِي تُقَدِّمُ فِيْهِ الصِّفَةَ</مقطع>
    <مقطع هوية='٥٥٧٢٦'>فَمَا حَسُنَ تَقْدِيْمُ صِفَتِهِ فَهُوَ مُلْتَبِسٌ بِالْأَوَّلِ</مقطع>
    <مقطع هوية='٣٠٠٩٢'>وَمَا لَا يَحْسُنُ فَلَيْسَ مُلْتَبِسًا بِهِ</مقطع>
    <مقطع هوية='٣٠٥٥٦'>أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول هوية='٣١٦٨٢'>مَرَرْتُ بِرَجُلٍ مُنْطَلِقَةٍ جَاْرِيَتَاْنِ يُحِبُّهُمَا</قول>
   </مقطع>
    <مقطع هوية='٩٧٥٢٦'>وَ<قول هوية='٢١١٩٥'>مَرَرْتُ بِرَجُلٍ مُنْطَلِقٍ زِيْدٌ وَأَخُوْهُ</قول>
   </مقطع>
    <مقطع هوية='٥٩٥٤٩'>لِأَنَّكَ لَمَّا أَشْرَكْتَ بَيْنَهُمَا فِي الْفِعْلِ صَاْرَ  <حرف>زَيْدٌ</حرف>  مُلْتَبِسًا بِالْـ<حرف>أَخِ</حرف>
   </مقطع>
    <مقطع هوية='٠٦٧٤٩'>فَالْتَبَسَ بِـ<حرف>رَجُلٍ</حرف>
   </مقطع>
    <مقطع هوية='٦٦٠٤٤'>وَلَوْ قُلْتَ <قول هوية='٤٨٥٤١'>أَزَيْدًا ضَرَبْتَ عَمْرًا وَضَرَبْتَ أَخَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٦٥٩٢٥'>لَمْ يَكُنْ كَلَاْمًا لِأَنَّ  <حرف>عَمْرًا</حرف>  لَيْسَ فِيْهِ مِنْ سَبَبِ الْأَوَّلِ شَيْءٌ وَلَا مُلْتَبِسًا بِهِ</مقطع>
    <مقطع هوية='١٤٨٠٩'>أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول هوية='٤٣٥٥٣'>مَرَرْتُ بِرَجُلٍ قَاْئِمٍ عَمْرٌو وَقَاْئِمٍ أَخُوْهُ</قول>
   </مقطع>
    <مقطع هوية='٠٤٢٧٢'>لَمْ يَجُزْ لِأَنَّ أَحَدَهُمَا مُلْتَبِسٌ بِالْأَوَّلِ وَالْآخَرُ لَيْسَ مُلْتَبِسًا</مقطع>

