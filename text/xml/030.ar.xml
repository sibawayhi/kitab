<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٥٥"
     درنبورج="١-٤٥"
     البكاء="١-١٨٢"
     هارون="١-١٠٨"
     يعقوب="١-١٦٢"
     رقم="٣٠">

    <عنوان>
       <مقطع هوية='٤٠٦٥٣'>هٰذَا بَاْبُ مَا جَرَى فِي الِاسْتِفْهَاْمِ</مقطع>
       <مقطع هوية='٣٠٣٥٦'>مِنْ أَسْمَاْءِ الْفَاْعِلِيْنَ وَالْمَفْعُوْلِيْنَ</مقطع>
       <مقطع هوية='٧٨٣٣٣'>مَجْرَى الْفِعْلِ</مقطع>
       <مقطع هوية='٩٨٥٧٣'>كَمَا يَجْرِي فِي غَيْرِهِ مَجْرَى الْفِعْلِ</مقطع>
   </عنوان>
   <مقطع هوية='٧٩٢٣١'>وَذٰلِكَ قَوْلُكَ <قول هوية='٧٤٤٨٩'>أَزَيْدًا أَنْتَ ضَاْرِبُهُ</قول></مقطع>
   <مقطع هوية='٢٢٧٠٩'>وَ<قول هوية='٠٤٧٥٩'>أَزَيْدًا أَنْتَ ضَاْرِبٌ لَهُ</قول></مقطع>
   <مقطع هوية='٥٦٤٥٠'>وَ<قول هوية='٥٧٦٢٢'>أَعَمْرًا أَنْتَ مُكْرِمٌ أَخَاْهُ</قول></مقطع>
   <مقطع هوية='٩٧٧٥٦'>وَ<قول هوية='٦٦٦٨٨'>أَزَيْدًا أَنْتَ نَاْزِلٌ عَلَيْهِ</قول></مقطع>
   <مقطع هوية='١٧٠٩٦'>كَأَنَّكَ قُلْتَ <قول هوية='٤١٩٣٥'>أَنْتَ ضَاْرِبٌ</قول></مقطع>
   <مقطع هوية='٨٣٧٣٢'>وَ<قول هوية='٩٨٢٦٢'>أَنْتَ مُكْرِمٌ</قول></مقطع>
   <مقطع هوية='٥٣٩٦٩'>وَ<قول هوية='٥٠٨٩٠'>أَنْتَ نَاْزِلٌ</قول></مقطع>
   <مقطع هوية='٢٦٩٤٣'>كَمَا كَاْنَ ذٰلِكَ فِي الْفِعْلِ</مقطع>
   <مقطع هوية='٧٢٦٢٤'>لِأَنَّهُ يَجْرِي مَجْرَاْهُ</مقطع>
   <مقطع هوية='٠٢١٧٢'>وَيَعْمَلُ فِي الْمَعْرِفَةِ كُلِّهَا وَالنَّكِرَةِ</مقطع>
   <مقطع هوية='٩٤٤٥٠'>مُقَدَّمًا وَمُؤَخَّرًا وَمُظْهَرًا وَمُضْمَرًا</مقطع>
    <مقطع هوية='٦٥٤٥٠'>وَكَذٰلِكَ <قول هوية='٨١٣٣٣'>آلدَّاْرَ أَنْتَ نَاْزِلٌ فِيْهَا</قول>
   </مقطع>
   <مقطع هوية='٨١١٩٤'>وَتَقُوْلُ <قول هوية='٩٧٤٢٨'>أَعَمْرًا أَنْتَ وَاْجِدٌ عَلَيْهِ</قول></مقطع>
   <مقطع هوية='٦٧٧٩٣'>وَ<قول هوية='٥٥٣٠١'>أَخَاْلِدًا أَنْتَ عَاْلِمٌ بِهِ</قول></مقطع>
  <مقطع هوية='٤٨٨٥٠'>وَ<قول هوية='٠٠٢٠٢'>أَزَيْدًا أَنْتَ رَاْغِبٌ فِيْهِ</قول></مقطع>
    <مقطع هوية='٣٢٠٥٣'>لِأَنَّكَ لَوْ أَلْقَيْتَ  <حرف>عَلَيْهِ</حرف> وَ<حرف>بِهِ</حرف> وَ<حرف>فَِيْهِ</حرف>  مِمَّا هَاْهُنَا لتعْتَبِرَ</مقطع>
    <مقطع هوية='١٥١٠٨'>لَمْ يَكُنْ لِيَكُوْنَ إِلَّا مِمَّا يُنْصَبُ <!-- يَنْتَصِبُ --></مقطع>
    <مقطع هوية='٩٠٦٨٩'>كَأَنَّهُ قَاْلَ <قول هوية='١٣٥٨٨'>أَعَبْدَ اللهِ أَنْتَ تَرْغَبُ فِيْهِ</قول></مقطع>
    <مقطع هوية='٠٩٠٥٧'>وَ<قول هوية='٠٠٦٣٠'>أَعَبْدَ اللهِ أَنْتَ تَعْلَمُ بِهِ</قول></مقطع>
    <مقطع هوية='١٢٥٤٥'>وَ<قول هوية='٠٣٠٥٨'>أَعَبْدَ اللهِ أَنْتَ تَجِدُ عَلَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٣٦٤٣٦'>فَإِنَّمَا اسَتَفْهَمْتَهُ عَنْ عِلْمِهِ بِهِ وَرَغْبَتِهِ فِيْهِ فِي حَاْلِ مَسْأَلَتِكَ</مقطع>
    <مقطع هوية='٨٠٧٨٣'>وَلَوْ قَاْلَ <قول هوية='٧٩٢٣٩'>آلدَّاْرُ أَنْتَ نَاْزِلٌ فِيْهَا</قول></مقطع>
    <مقطع هوية='١٦٥٤٦'>فَجَعَلَ  <حرف>نَاْزِلًا</حرف>  اسْمًا</مقطع>
    <مقطع هوية='٢٩٢٢٢'>رَفَعَ</مقطع>
    <مقطع هوية='٦٥٤٨٦'>كَأَنَّهُ قَاْلَ <قول هوية='٤١٩٢٨'>آلدَّاْرُ أَنْتَ رَجُلٌ فِيْهَا</قول>
   </مقطع>
   <مقطع هوية='٢٩٠٩٣'>وَلَوْ قَاْلَ <قول هوية='٦٣٣٠٤'>أَزَيْدٌ أَنْتَ ضَاْرِبُهُ</قول></مقطع>
   <مقطع هوية='٠٧٣٣٢'>فَجَعَلَهُ بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٧٠٧٤٧'>أَزَيْدٌ أَنْتَ أَخُوْهُ</قول></مقطع>
   <مقطع هوية='٤٤٩٠٢'>جَاْزَ</مقطع>
   <مقطع هوية='٠١١٧٥'>وَمِثْلُ ذٰلِكَ فِي النَّصْبِ <قول هوية='٥٤٩٨٢'>أَزَيْدًا أَنْتَ مَحْبُوْسٌ عَلَيْهِ</قول></مقطع>
   <مقطع هوية='٢٧٤٣٠'>وَ<قول هوية='١٣٢٤٨'>أَزَيْدًا أَنْتَ مُكَاْبَرٌ عَلَيْهِ</قول></مقطع>
   <مقطع هوية='٨٦٠٢٢'>وَإِنْ لَمْ يُرِدْ بِهِ الْفِعْلَ</مقطع>
   <مقطع هوية='٢٥٧١٣'>وَأَرَاْدَ بِهِ وَجْهَ الْاسْمِ</مقطع>
   <مقطع هوية='٣٣٧٧٧'>رَفَعَ</مقطع>
   <مقطع هوية='٩٩٨٤٣'>وَكَذٰلِكَ جَمِيْعُ هٰذَا</مقطع>
   <مقطع هوية='١٤١٩٩'>فَـ<مثال>مَفْعُوْلٌ</مثال> مِثْلُ <مثال>يُفْعَلُ</مثال></مقطع>
   <مقطع هوية='٢٣٦٨١'>وَ<مثال>فَاْعِلٌ</مثال> مِثْلُ <مثال>يَفْعَلُ</مثال></مقطع>

   <مقطع هوية='٥٨٩٤٣'>وَمِمَّا يُجْرَى مُجْرَى <مثال>فَاْعِلٍ</مثال> مِنْ أَسْمَاْءِ الْفَاْعِلِيْنَ  <مثال>فَوَاْعِلُ</مثال></مقطع>
   <مقطع هوية='٣٩١١٨'>أَجْرَوْهُ مُجْرَى <مثال>فَاْعِلَةٍ</مثال></مقطع>
   <مقطع هوية='٢١١٩٠'>حَيْثُ كَاْنُوْا جَمَعُوْهُ وَكَسَّرُوْهُ عَلَيْهِ</مقطع>
   <مقطع هوية='٨١٥٥٧'>كَمَا فَعَلُوْا ذٰلِكَ بِـ<مثال>فَاْعِلِيْنَ</مثال>
   وَ<مثال>فَاْعِلَاْتٍ</مثال></مقطع>
    <مقطع هوية='٨٢٧٥٧'>فَمِنْ ذٰلِكَ قَوْلُهُمْ <قول هوية='٤٥٥٧٤'>هُنَّ حَوَاْجُّ بَيْتَ اللهِ</قول>
   </مقطع>
    <مقطع هوية='١٥٠٧٤'>وَقَاْلَ <شاعر>أَبُو كَبِيْرٍ الْهُذَلِيُّ</شاعر></مقطع>
    <شاهدة هوية='٦٣٢١٦' شاعر="أَبُو كَبِيْرٍ الْهُذَلِيُّ">
       <بيت>
          <مصراع>مِمَّا حَمَلْنَ بِهِ <ثبات>وَهُنَّ عَوَاْقِدُ</ثبات></مصراع>
          <مصراع><ثبات>حُبُكَ</ثبات> النِّطَاْقِ <!-- فَشَبَّ -->فَعَاْشَ غَيْرَ مُهَبَّلِ</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٩٨٦٦٨'>وَقَاْلَ <شاعر>الْعَجَّاْجُ</شاعر></مقطع>
    <شاهدة هوية='٨٤٢٢٣' شاعر="الْعَجَّاْجُ">
       <بيت>
          <مصراع><ثبات>أَوَالِفًا مَكَّةَ</ثبات> مِنْ وُرْقِ الْحَمِي</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٥١٥٩٨'>وَقَدْ جَعَلَ بَعْضُهُمْ <مثال>فُعَّاْلًا</مثال>
   بِمَنْزِلَةِ <مثال>فَوْعِلَ</مثال></مقطع>
   <مقطع هوية='٤٤٤٣٤'>فَقَاْلُوْا <حرف>قُطَّاْنٌ مَكَّةَ</حرف></مقطع>
   <مقطع هوية='٦١٥٤٩'>وَ<حرف>سُكَّاْنٌ الْبَلَدَ الْحَرَاْمَ</حرف></مقطع>
   <مقطع هوية='٦٩٩٢٠'>لِأَنَّهُ جَمْعٌ كَـ<مثال>فَوَاْعِلَ</مثال></مقطع>

   <مقطع هوية='٣٨٨٢٨'>وَأَجْرَوِا اسْمَ الْفَاْعِلِ إِذَا أَرَاْدُوْا أَنْ يُبَاْلِغُوْا فِي الْأَمْرِ</مقطع>
   <مقطع هوية='٧١١٢٤'>مُجْرَاْهُ إِذَا كَاْنَ عَلَى بِنَاْءِ <مثال>فَاْعِلٍ</مثال></مقطع>
   <مقطع هوية='٦٥٢٥٢'>لِأَنَّهُ يُرِيْدُ بِهِ مَا أَرَاْدَ بِـ<مثال>فَاْعِلٍ</مثال>
   مِنْ إِيْقَاْعِ الْفِعْلِ</مقطع>
    <مقطع هوية='٨٨٤٥١'>إِلَّا أَنَّهُ يُرِيْدُ أَنْ يُحَدِّثَ عَنْ الْمُبَاْلَغَةِ</مقطع>
    <مقطع هوية='٢٣٣٥٢'>فَمَا هُوَ الْأَصْلُ الَّذِي عَلَيْهِ أَكْثَرُ هٰذَا الْمَعْنَى</مقطع>
    <مقطع هوية='٩٢١٦٤'><مثال>فَعُوْلٌ</مثال> وَ<مثال>مِفْعَاْلٌ</مثال>
    وَ<مثال>فَعَّاْلٌ</مثال> وَ<مثال>فَعِلٌ</مثال></مقطع>
    <مقطع هوية='٦٤٤٢١'>وَقَدْ جَاْءَ <مثال>فَعِيْلٌ</مثال> <!-- لِأَنَّ -->
    كَـ<حرف>رَحِيْمٍ</حرف> وَ<حرف>عَلِيْمٍ</حرف> وَ<حرف>قَدِيْرٍ</حرف> وَ<حرف>سَمِيْعٍ</حرف> وَ<حرف>بَصِيْرٍ</حرف>
   </مقطع>
   <مقطع هوية='٨٨٠٤٩'>يَجُوْزُ فِيْهِنَّ مَا جَاْزَ فِي <مثال>فَاْعِلٍ</مثال></مقطع>
   <مقطع هوية='٦٢٠٧٣'>مِنَ التَّقْدِيْمِ وَالتَّأْخِيْرِ وَالْإِضْمَاْرِ وَالْإِظْهَاْرِ</مقطع>
    <مقطع هوية='٧١٠٠٢'>لَوْ قُلْتَ <قول هوية='٣٩٠٠٦'>هٰذَا ضَرُوْبُ رُءُوْسِ الرِّجَاْلِ وَسُوْقَ الْإِبْلِ</قول></مقطع>
    <مقطع هوية='٢٧٩٠٦'>عَلَى <حرف>وَضَرُوْبٌ سَوْقَ الْإِبِلِ</حرف></مقطع>
    <مقطع هوية='٣١٠٨٠'>جَاْزَ</مقطع>
    <مقطع هوية='٣٦١٦٦'>كَمَا تَقُوْلُ <قول هوية='٨٧١٠٢'>هٰذَا ضَاْرِبُ زَيْدٍ وَعَمْرًا</قول></مقطع>
    <مقطع هوية='١٦٩٤٧'>تُضْمِرُ <حرف>وَضَاْرَبٌ</حرف> عَمْرًا</مقطع>
    <مقطع هوية='٣٩٦٧٧'>وَمِمَّا جَاْزَ فِيْهِ مُقَدَّمًا وَمُؤَخَّرًا عَلَى نَحْوِ مَا جَاْءَ فِي  <مثال>فَاْعِلٍ</مثال></مقطع>
    <مقطع هوية='٣٣٤٢٨'>قَوْلُ <شاعر>ذِي الرُّمَّةِ</شاعر></مقطع>
    <شاهدة هوية='٧٢٤١٠' شاعر="ذُو الرُّمَّةِ">
       <بيت>
          <مصراع><ثبات>هَجُوْمٌ عَلَيْهَا نَفْسَهُ</ثبات> غَيْرَ أَنَّهُ</مصراع>
          <مصراع>مَتَى يُرْمَ فِي عَيْنَيْهِ بِالشَّبْحِ يَنْهَضِ</مصراع>
      </بيت>
   </شاهدة>

    <مقطع هوية='٠١٧٧٠'>وَقَاْلَ <شاعر>أَبُو ذُؤَيْبٍ الْهُذَلِيُّ</شاعر></مقطع>
    <شاهدة هوية='٢٢١٥٠' شاعر="أَبُو ذُؤَيْبٍ الْهُذَلِيُّ">
       <بيت>
          <مصراع>قَلَى دِيْنَهُ وَاهْتَاْجَ لِلشَّوْقِ إِنَّهَا</مصراع>
          <مصراع>عَلَى الشَّوْقِ <ثبات>إِخْوَاْنَ الْعَزَاْءِ هَيُوْجُ</ثبات></مصراع>
      </بيت>
   </شاهدة>

    <مقطع هوية='٥٧٨٢٤'>وَقَاْلَ <شاعر>الْقُلاْخُ</شاعر></مقطع>
    <شاهدة هوية='١٤٣٥٦' شاعر="الْقُلاْخُ">
       <بيت>
          <مصراع>أَخَا الْحَرْبِ <ثبات>لَبّاْسًا إِلَيْهَا جِلَاْلَهَا</ثبات></مصراع>
          <مصراع><ثبات>وَلَيْسَ بِوَلَّاْجِ الْخَوَالِفِ</ثبات> أَعْقَلا</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='١٥٦٥٩'>وَسَمِعْنَا مَنْ يَقُوْلُ
   <قول هوية='٨٢٧٩٦'>أَمَّا الْعَسَلَ فَأَنَا شَرَّاْبٌ</قول></مقطع>

   <مقطع هوية='٠٩٠١٩'>وَقَاْلَ</مقطع>
    <شاهدة هوية='٢٢٠٠٩'>
       <بيت>
          <مصراع>بَكِيْتُ أَخَا الَأْوَاْءِ يُحْمَدُ يَوْمُهُ</مصراع>
          <مصراع>كَرِيْمٌ <ثبات>رُءُوْسَ الدَّاْرِعِيْنَ ضَرَوْبُ</ثبات></مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٧٩٤٠٢'>وَقَاْلَ <شاعر>أَبُو طَاْلِبٍ بْنُ عَبْدِ الْمُطَّلِبِ</شاعر></مقطع>
    <شاهدة هوية='١٨٤٦٦' شاعر="أَبُو طَاْلِبٍ بْنُ عَبْدِ الْمُطَّلِبِ">
       <بيت>
          <مصراع><ثبات>ضَرُوْبٌ</ثبات> بِنَصْلِ السَّيْفِ <ثبات>سُوْقَ سِمَاْنِهَا</ثبات></مصراع>
          <مصراع>إِذَا عَدِمُوْا زَاْدًا فَإِنَّكَ عَاْقِرُ</مصراع>
      </بيت>
   </شاهدة>

    <مقطع هوية='٠٢٣٤٦'>وَقَدْ جَاْءَ فِي  <مثال>فَعِلَ</مثال> وَلَيْسَ فِي كَثْرَةِ ذٰلِكَ</مقطع>
    <مقطع هوية='٢٣٠٢٣'>قَاْلَ الشَّاْعِرُ [وَهُوَ <شاعر>عَمْرٌو بْنُ أَحْمَرَ</شاعر>]</مقطع>
    <شاهدة هوية='٩٣٧٧٨' شاعر="عَمْرٌو بْنُ أَحْمَرَ">
       <بيت>
          <مصراع>أَوْ مِسْحَلٌ <ثبات>شَنِجٌ عِضَاْدَةَ سَمْحَجٍ</ثبات></مصراع>
          <مصراع>بِسَراْتِهِ نَدَبٌ لَهَا وَكُلُوْمُ</مصراع>
      </بيت>
   </شاهدة>

    <مقطع هوية='٧٦٧٦٩'>وَقَاْلَ <قول هوية='٢٦٩٢٧'>إِنَّهُ لَمِنْحَاْرٌ بَوَاْئِكَهَا</قول></مقطع>
    <مقطع هوية='٤٧٠٠٥'>وَ <مثال>فَعِلٌ</مثال>
    أَقَلُّ مِنْ <مثال>فَعِيْلٍ</مثال> بِكَثِيْرٍ</مقطع>
    <مقطع هوية='١٧٣٨٠'>وَأَجْرَوْهُ حِيْنَ بَنُوْهُ لِلْجَمْعِ
    <!-- [يْعَنْي  <حرف>فَعُوْلًا</حرف>  ] -->
    كَمَا <!-- [كَاْنَ] --> أُجْرِيَ فِي الْوَاْحِدِ</مقطع>
    <مقطع هوية='٥٧٤٧٧'>لِيَكُوْنَ كَـ<مثال>فَوَاْعِلَ</مثال>
    حِيْنَ أُجْرِيَ مِثْلَ <مثال>فَاْعِلٍ</مثال></مقطع>

    <مقطع هوية='٥٠٠٥٢'>مِنْ ذٰلِكَ قَوْلُ <شاعر>طَرَفَةَ</شاعر></مقطع>
    <شاهدة هوية='٥٦١٩٨' شاعر="طَرَفَةُ">
       <بيت>
          <مصراع>ثُمَّ زَاْدُوْا أَنَّهُمْ فِي قَوْمِهِمْ</مصراع>
          <مصراع><ثبات>غُفُرٌ ذَنْبَهُمُ</ثبات> غَيْرُ فُخُرْ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٦٢٩٢٣'>وَمِمَّا جَاْءَ عَلَى <مثال>فَعِلٍ</مثال> قَوْلُهُ</مقطع>
    <شاهدة هوية='٨١٢٢٩'>
       <بيت>
          <مصراع><ثبات>حَذِرٌ أُمُوْرًا</ثبات> لَا تُخْاْفُ وَآمِنٌ</مصراع>
          <مصراع>مَا لَيْسَ مُنْجِيَهُ مِنَ الْأَقْدَاْرِ</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٠٩٣٤٦'>وَمِنْ هٰذَا الْبَاْبِ قَوْلُ <شاعر>رُؤْبَةَ</شاعر></مقطع>
    <شاهدة هوية='٨٩٨٨٢' شاعر="رُؤْبَةُ">
       <بيت>
          <مصراع>بِرَأْسِ <ثبات>دَمَّاْغٍ رُءُوْسَ الْعِزِّ</ثبات></مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٩٧٨٠٤'>وَمِنْهُ قَوْلُ <شاعر>سَاْعِدَةَ بْنَ جُؤَيَّةَ</شاعر></مقطع>
    <شاهدة هوية='٥٢٧٩٢' شاعر="سَاْعِدَةُ بْنُ جُؤَيَّةَ">
       <بيت>
          <مصراع>حَتَّى شَآهَا <ثبات>كَلِيْلٌ مَوْهِنًا</ثبات> عَمِلٌ</مصراع>
          <مصراع>بَاْتَتْ طِرَاْبًا وَبَاْتَ اللَّيْلَ لَمْ يَنَمِ</مصراع>
      </بيت>
   </شاهدة>

    <مقطع هوية='٤٦٩٠٨'>وَقَاْلَ <شاعر>الْكُمَيْتُ</شاعر></مقطع>
    <شاهدة هوية='٣٢٦٠٢' شاعر="الْكُمَيْتُ">
       <بيت>
          <مصراع>شُمٍّ مَهاْوِيْنَ أَبْدَاْنَ الْجَزُوْرِ مَخَا</مصراع>
          <مصراع>مِيْصِ الْعَشِيّاْتِ لَا خُوْرٍ وَلَا قُزُمٍ</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٨٣٨٣١'>وَمِنْهُ <حرف>قَدِيْرٌ</حرف>
   وَ<حرف>عَلِيْمٌ</حرف> وَ<حرف>رَحِيْمٌ</حرف></مقطع>
   <مقطع هوية='٠٦٥٤٦'>لِأَنّهُ يُرِيْدُ الْمُبَاْلَغَةَ فِي الْفِعْلِ</مقطع>
   <مقطع هوية='٧٩٦٣٣'>وَلَيْسَ هٰذَا بِمَنْزِلَةِ قَوْلِكَ
   <حرف>حَسَنٌ وَجْهَ الْأَخِ</حرف></مقطع>
    <مقطع هوية='٤٨٠٩١'>لِأَنَّ هٰذَا لَا يُقْلَبُ وَلَا يَضْمُرَ</مقطع>
    <مقطع هوية='٢٩٥٤٢'>وَإِنَّمَا حَدُّهُ أَنْ يُتَكَلَّمَ بِهِ فِي الْأَلِفِ وَاللَّاْمِ أَوْ نَكِرَةً</مقطع>
    <مقطع هوية='٩٩٠٠٤'>وَلَا تَعْنِي بِهِ أَنَّكَ أَوْقَعْتَ فِعْلًا سَلَفَ مِنْكَ إِلَى أَحَدٍ</مقطع>
    <مقطع هوية='٦٩١٧٥'>وَلَا يَحْسُنُ أَنْ تَفْصِلَ بَيْنَهُمَا</مقطع>
    <مقطع هوية='٦٢٥٢٨'>فَتَقُوْلَ <قول ج="؟" هوية='٠٤٥٩٤'>هُوَ كَرِيْمٌ فِيْهَا حَسَبَ الْأَبِ</قول>
   </مقطع>

   <مقطع هوية='٩٥٣٥٧'>وَمِمَّا أُجْرِيَ مُجْرَى الْفِعْلِ مِنَ الْمَصَاْدِرِ قَوْلُ الشَّاْعِرِ</مقطع>
    <شاهدة هوية='٩٥٦٠٠'>
       <بيت>
          <مصراع>يَمُرُّوْنَ بِالدَهْنَا خِفَاْفًا عِيَاْبُهُمْ</مصراع>
          <مصراع>وَيَخْرُجْنَ مِنْ دَاْرِيْنَ بُجْرَ الْحَقَاْئِبِ</مصراع>
      </بيت>
       <بيت>
          <مصراع>عَلَى حِيْنَ أَلْهَى النَّاْسَ جُلُّ أُمُوْرِهِمْ</مصراع>
          <مصراع><ثبات>فَنَدْلًا زُرَيْقُ الْمَاْلَ</ثبات> نَدْلَ الثَّعَاْلِبِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٨٧٨٩٢'>كَأَنَّهُ قَاْلَ <حرف>انْدُلْ</حرف></مقطع>
    <مقطع هوية='٦٥٨٦٩'>وَقَاْلَ <شاعر>الْمَرَّاْرُ الْأَسَدِيُّ</شاعر></مقطع>
    <شاهدة هوية='٠٣٧١٥' شاعر="الْمَرَّاْرُ الْأَسَدِيُّ">
       <بيت>
          <مصراع><ثبات>أَعَلَاْقَةً أُمَّ الْوُلّيِّدِ</ثبات> بَعْدَمَا</مصراع>
          <مصراع>أَفْنَاْنُ رَأْسِكَ كَالثَّغَاْمِ الْمُخْلِسِ</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٨٣٨٢٥'>وَقَاْلَ</مقطع>
    <شاهدة هوية='٥٢٣٥٦'>
       <بيت>
          <مصراع><ثبات>بِضَرْبٍ</ثبات> بِالسُّيُوْفِ <ثبات>رُءُوْسَ قَوْمٍ</ثبات></مصراع>
          <مصراع>أَزَلْنَا هَاْمَهُنَّ عَنِ الْمَقِيْلِ</مصراع>
      </بيت>
   </شاهدة>

   <مقطع هوية='٧٣٣٨٧'>وَ تَقُوْلُ <قول هوية='٥٠٣٠٢'>أَعَبْدُ اللهِ أَنْتَ رَسُوْلٌ لَهُ</قول> وَ<حرف>رَسُوْلُهُ</حرف></مقطع>
   <مقطع هوية='٤٠٧٤٤'>لِأَنَّكَ لَا تُرِيْدُ بِـ<مثال>فَعُوْلٍ</مثال>
   هٰهُنَا مَا تُرِيْدُ بِهِ فِي <حرف>ضَرُوْبٍ</حرف></مقطع>
    <مقطع هوية='٧٨١١٢'>لِأَنَّكَ لَا تُرِيْدُ أَنْ تُوْقِعَ مِنْهُ فِعْلًا عَلَيْهِ</مقطع>
    <مقطع هوية='٨٩٢٣٥'>فَإِنَّمَا هُوَ بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٣٩٨٦٠'>أَعَبْدُ اللهِ أَنْتَ عَجُوْزٌ لَهُ</قول>
   </مقطع>
   <مقطع هوية='٥٧٠٩١'>وَتَقُوْلُ <قول هوية='٩٠١١٨'>أَعَبْدُ اللهِ أَنْتَ لَهُ عَدِيْلٌ</قول></مقطع>
   <مقطع هوية='٠٢٥١٨'>وَ<قول هوية='٣٨١٦٩'>أَعَبْدُ اللهِ أَنْتَ لَهُ جَلِيْسٌ</قول></مقطع>
    <مقطع هوية='٢٣٦٤٨'>لِأَنَّكَ لَا تُرِيْدُ بِهِ مُبَاْلَغَةً فِي فِعْلٍ</مقطع>
    <مقطع هوية='١٥٨٦٢'>وَلَمْ تَقُلْ  <حرف>مُجَاْلِسٌ</حرف>
    فَيَكُوْنُ كَـ<مثال>فَاْعِلٍ</مثال></مقطع>
    <مقطع هوية='١٩٣٤٨'>فَإِنَّمَا هٰذَا اسْمٌ بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٧٠٩٣٨'>أَزَيْدٌ أَنْتَ وَصِيْفٌ لَهُ</قول> أَوْ <حرف>غُلَاْمٌ لَهُ</حرف></مقطع>
   <مقطع هوية='٤٣١١٦'>وَكَذٰلِكَ <قول هوية='٢٠٢٣٤'>آلْبَصْرَةُ أَنْتَ عَلَيْهَا أَمِيْرٌ</قول></مقطع>
   <مقطع هوية='٥٥٨١٢'>فَأَمَّا الْأَصْلُ الْأَكْثَرُ الَّذِي جَرَى مُجْرَى الْفِعْلِ مِنَ الْأَسْمَاْءِ</مقطع>
   <مقطع هوية='٣٦١٦٥'>فَـ<مثال>فَاْعِلٌ</مثال></مقطع>
    <مقطع هوية='٣١٠٦٠'>وَإِنَّمَا جَاْزَ فِي الَّتِي بُنِيَتْ لِلْمُبَاْلَغَةِ</مقطع>
    <مقطع هوية='٥٣٦٠١'>لِأَنَّهَا بُنِيَتْ لِلْفَاْعِلِ مِنْ لَفْظِهِ وَالْمَعْنَى وَاْحِدٌ</مقطع>
    <مقطع هوية='٨٤٠٣٦'>وَلَيْسَتْ بِالْأَبْنِيَّةِ الَّتِي هِى فِي الْأَصْلِ أَنْ تَجْرِيَ مُجْرَى الْفِعْلِ</مقطع>
    <مقطع هوية='٣٥٣٣٥'>يَدَلُّكَ عَلَى ذٰلِكَ أَنَّهَا قَلِيْلَةٌ</مقطع>
    <مقطع هوية='٩٨٧٦١'>فَإِذَا لَمْ يَكُنْ فِيْهَا مُبَاْلَغَةُ الْفِعْلِ</مقطع>
    <مقطع هوية='٦٩٣٥٤'>فَإِنَّمَا هِى بِمَنْزِلَةِ  <حرف>غُلَاْمٍ</حرف> وَ<حرف>عَبْدٍ</حرف></مقطع>
    <مقطع هوية='٩٣٣٠٣'>لِأَنَّ الِاسْمَ عَلَى فَعَلَ يَفْعَلُ <مثال>فَاْعِلٌ</مثال>
    وَعَلَى  فُعِلَ يُفْعَلُ <مثال>مَفْعُوْلٌ</مثال></مقطع>
   <مقطع هوية='٠٤٠٩٤'>فَإِذَا لَمْ يَكُنْ وَاْحِدٌ مِنْهُمَا</مقطع>
   <مقطع هوية='٠٥١٨٣'>وَلَا الَّذِي لِمُبَاْلَغَةِ الْفَاْعِلِ</مقطع>
   <مقطع هوية='٥٩٠٩٥'>لَمْ يَكُنْ فِيْهِ إِلَّا الرَّفْعُ</مقطع>
    <مقطع هوية='١١٩٤٣'>وَتَقُوْلُ <قول هوية='٣١٣٥٥'>أَكُلُّ يَوْمٍ أَنْتَ فِيْهِ أَمِيْرٌ</قول>
   </مقطع>
    <مقطع هوية='٢٦٣١٤'>تَرْفَعُهُ لِأَنَّهُ لَيْسَ بِفَاْعِلٍ</مقطع>
    <مقطع هوية='٣٠٧٢٢'>وَقَدْ خَرَجَ <حرف>كُلُّ</حرف>
    مِنْ أَنْ يَكُوْنَ ظَرْفًا فَصَاْرَ بِمَنْزِلَةِ <حرف>عَبْدُ اللهِ</حرف></مقطع>
    <مقطع هوية='٣١٥٩٥'>أَلَا تَرَى أَنَّكَ إِذَا قُلْتَ <قول هوية='٨٧٢١٩'>أَكُلُّ يَوْمٍ يُنْطَلَقُ فِيْهِ</قول></مقطع>
    <مقطع هوية='٠٥٨٢٩'>صَاْرَ كَقَوْلِكَ <قول هوية='٣٣٥٨٥'>أَزَيْدٌ يُذْهَبُ بِهِ</قول>
   </مقطع>
   <مقطع هوية='٥٢٥٠٣'>وَلَوْ جَاْزَ أَنْ تَنْصِبَ  <حرف>كُلَّ يَوْمٍ</حرف>  وَأَنْتَ تُرِيْدُ بِـ<حرف>الْأَمِيْرِ</حرف>  الاسْمَ</مقطع>
   <مقطع هوية='٥٧١٧٧'>لَقُلْتَ <قول هوية='١٠٣٨٣'>أَعَبْدَ اللهِ عَلَيْهِ ثَوْبٌ</قول>
   </مقطع>
    <مقطع هوية='٦٧٧٧٥'>لِأَنَّكَ تَقُوْلُ <قول هوية='٣٣٣٩٠'>أَكُلَّ يَوْمٍ لَكَ ثَوْبٌ</قول> فَيَكُوْنُ نَصْبًا</مقطع>
    <!-- <مقطع هوية='٣٠٠١٩'>فَإِذَا شَغَلْتَ الْفِعْلَ نَصَبْتَ</مقطع> -->
    <!-- <مقطع هوية='٨٢٦٢٩'>فَقُلْتَ <قول هوية='٦٥١٥٠'>أَكُلَّ يَوْمٍ لَكَ فِيْهِ ثَوْبٌ</قول></مقطع> -->
    <مقطع هوية='٦٢٩١٧'>فَإِنْ قُلْتَ <قول هوية='٦٥٦٧٩'>أَكُلَّ يَوْمٍ لَكَ فِيْهِ ثَوْبٌ</قول></مقطع>
    <مقطع هوية='٤٠٠٨٢'>فَنَصَبْتَ وَقَدْ جَعَلْتَهُ خَاْرِجًا مِنْ أَنْ يَكُوْنَ ظَرْفًا</مقطع>
   <مقطع هوية='٢٨٦٦٩'>فَإِنَّهُ يَنْبَغِي أَنْ تَنْصِبَ <قول هوية='٠٤١٩٨'>أَعْبَدَ اللهِ عَلَيْهِ ثَوْبٌ</قول>
   </مقطع>
   <مقطع هوية='٧٣٣٣٠'>وَهٰذَا لَا يَكُوْنُ</مقطع>
   <مقطع هوية='٠٢٠٧٩'>لِأَنَّ الظَّرْفَ هُنَا لَمْ يَنْصِبْهُ فِعْلٌ</مقطع>
   <مقطع هوية='٧٦٠١٥'>إِنَّمَا <حرف>عَلَيْهِ</حرف> ظَرْفٌ لِلثَّوْبِ وَكَذٰلِكَ <حرف>فِيْهِ</حرف></مقطع>

