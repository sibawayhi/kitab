     بلاق="١-٨"
     درنبورج="١-٧"
     البكاء="١-٧٢"
     هارون="١-٢٥"
     يعقوب="١-٥٢"
     رقم="٦">

  <عنوان>
    <مقطع هوية='٨١٧٠٦' رقم="١">هٰذَا بَاْبُ الاِسْتِقَاْمَةِ مِنَ الْكَلَاْمِ وَالْإِحَاْلَةِ</مقطع>
  </عنوان>
  <مقطع هوية='٩٠٠١١' رقم="٢">فَمِنْهُ</مقطع>
  <مقطع هوية='٩٠٤٤٩' رقم="٣">مُسْتَقِيْمٌ حَسَنٌ</مقطع>
  <مقطع هوية='٨٥٥٠٩' رقم="٤">وَمُحَاْلٌ</مقطع>
  <مقطع هوية='٢٧٥٥٩' رقم="٥">وَمُسْتَقِيْمٌ كَذِبٌ</مقطع>
  <مقطع هوية='١٥٠٢٦' رقم="٦">وَمُسْتَقِيْمٌ قَبِيْحٌ</مقطع>
  <مقطع هوية='٣٩٠٥٣' رقم="٧"> وَمَا هُوَ مُحَاْلٌ كَذِبٌ</مقطع>

  <مقطع هوية='٦٩٤٨٤' رقم="٨">فَأَمَّا الْمُسْتَقِيْمُ الْحَسَنُ</مقطع>
  <مقطع هوية='٤١٤٩٩' رقم="٩">فَقَوْلُكَ <قول هوية='٢١٣٠٥'>أَتَيْتُكَ أَمْسِ</قول></مقطع>
  <مقطع هوية='٢٤٤٣٦' رقم="١٠"> وَ<قول هوية='٩١١٦١'>سَآتِيْكَ غَدًا</قول></مقطع>

  <مقطع هوية='٦٣٢٩١' رقم="١١">وأَمَّا الْمُحَاْلُ</مقطع>
  <مقطع هوية='٥١٦٣٦' رقم="١٢">فَأَنْ تُنْقَضَ أَوَّلُ كَلَاْمِكَ بِآخِرِهِ</مقطع>
  <مقطع هوية='٢١٠٥٣' رقم="١٣">فَتَقُوْلَ  <قول هوية='٧٧٠٤٨'>أَتَيْتُكَ غَدًا</قول></مقطع>
  <مقطع هوية='٠١٦٨٨' رقم="١٤"> وَ<قول هوية='٣٤٨٢٢'>سَآتِيْكَ أَمْسِ</قول></مقطع>

  <مقطع هوية='٥٤٨٨٢' رقم="١٥">وَأَمَّا الْمُسْتَقِيْمُ الْكَذِبُ</مقطع>
  <مقطع هوية='٧٨٦٣٥' رقم="١٦">فَقَوْلُكَ  <قول هوية='٤٤٢٨١'>حَمَلْتُ الْجَبَلَ</قول></مقطع>
  <مقطع هوية='٤٤٣٩٢' رقم="١٧">و<قول هوية='٥٤٨٥٣'>شَرِبْتُ مَاْءَ الْبَحْرِ</قول></مقطع>
  <مقطع هوية='٢٥٨٥٦' رقم="١٨"> وَنَحْوُهُ</مقطع>

  <مقطع هوية='٥٧٣٣٥' رقم="١٩">وَأَمَّا الْمُسْتَقِيْمُ الْقَبِيْحُ</مقطع>
  <مقطع هوية='٢٤٣٤٩' رقم="٢٠">فَأَنْ تَضَعَ اللَّفْظَ في غَيْرِ مَوْضِعِهِ</مقطع>
  <مقطع هوية='٥٥١٨٠' رقم="٢١">نَحْوُ قَوْلِكَ <قول هوية='٣٤٦٠٥'>قَدْ زَيْدًا رَأَيْتُ</قول></مقطع>
  <مقطع هوية='١٣٦٠٩' رقم="٢٣">وَ<قول هوية='٩٥٦٥٠'>كَيْ زَيْدٌ يَأْتِيَكَ</قول></مقطع>
  <مقطع هوية='١٢٢٤٥' رقم="٢٤">وَأَشْبَاْهُ هٰذَا</مقطع>

  <مقطع هوية='٥٠٩٠٥' رقم="٢٥">وَأَمَّا الْمُحَاْلُ الْكَذِبُ </مقطع>
  <مقطع هوية='٦٨٨٣٥' رقم="٢٦"> فَأَنْ تَقُوْلَ</مقطع>
  <مقطع هوية='٦٧١٨١' رقم="٢٧"><قول هوية='٤٨٤٠١'>سَوْفَ أَشْرَبُ مَاْءَ الْبَحْرِ أَمْسِ</قول></مقطع>

