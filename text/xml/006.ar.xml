  <عنوان>
    <مقطع هوية='٨١٧٠٦'>هٰذَا بَاْبُ الاِسْتِقَاْمَةِ مِنَ الْكَلَاْمِ وَالْإِحَاْلَةِ</مقطع>
  </عنوان>
  <مقطع هوية='٩٠٠١١'>فَمِنْهُ</مقطع>
  <مقطع هوية='٩٠٤٤٩'>مُسْتَقِيْمٌ حَسَنٌ</مقطع>
  <مقطع هوية='٨٥٥٠٩'>وَمُحَاْلٌ</مقطع>
  <مقطع هوية='٢٧٥٥٩'>وَمُسْتَقِيْمٌ كَذِبٌ</مقطع>
  <مقطع هوية='١٥٠٢٦'>وَمُسْتَقِيْمٌ قَبِيْحٌ</مقطع>
  <مقطع هوية='٣٩٠٥٣'> وَمَا هُوَ مُحَاْلٌ كَذِبٌ</مقطع>

  <مقطع هوية='٦٩٤٨٤'>فَأَمَّا الْمُسْتَقِيْمُ الْحَسَنُ</مقطع>
  <مقطع هوية='٤١٤٩٩'>فَقَوْلُكَ <قول هوية='٢١٣٠٥'>أَتَيْتُكَ أَمْسِ</قول></مقطع>
  <مقطع هوية='٢٤٤٣٦'> وَ<قول هوية='٩١١٦١'>سَآتِيْكَ غَدًا</قول></مقطع>

  <مقطع هوية='٦٣٢٩١'>وأَمَّا الْمُحَاْلُ</مقطع>
  <مقطع هوية='٥١٦٣٦'>فَأَنْ تُنْقَضَ أَوَّلُ كَلَاْمِكَ بِآخِرِهِ</مقطع>
  <مقطع هوية='٢١٠٥٣'>فَتَقُوْلَ  <قول ج="*" هوية='٧٧٠٤٨'>أَتَيْتُكَ غَدًا</قول></مقطع>
  <مقطع هوية='٠١٦٨٨'> وَ<قول ج="*" هوية='٣٤٨٢٢'>سَآتِيْكَ أَمْسِ</قول></مقطع>

  <مقطع هوية='٥٤٨٨٢'>وَأَمَّا الْمُسْتَقِيْمُ الْكَذِبُ</مقطع>
  <مقطع هوية='٧٨٦٣٥'>فَقَوْلُكَ  <قول هوية='٤٤٢٨١'>حَمَلْتُ الْجَبَلَ</قول></مقطع>
  <مقطع هوية='٤٤٣٩٢'>و<قول هوية='٥٤٨٥٣'>شَرِبْتُ مَاْءَ الْبَحْرِ</قول></مقطع>
  <مقطع هوية='٢٥٨٥٦'> وَنَحْوُهُ</مقطع>

  <مقطع هوية='٥٧٣٣٥'>وَأَمَّا الْمُسْتَقِيْمُ الْقَبِيْحُ</مقطع>
  <مقطع هوية='٢٤٣٤٩'>فَأَنْ تَضَعَ اللَّفْظَ في غَيْرِ مَوْضِعِهِ</مقطع>
  <مقطع هوية='٥٥١٨٠'>نَحْوُ قَوْلِكَ <قول هوية='٣٤٦٠٥'>قَدْ زَيْدًا رَأَيْتُ</قول></مقطع>
  <مقطع هوية='١٣٦٠٩'>وَ<قول هوية='٩٥٦٥٠'>كَيْ زَيْدٌ يَأْتِيَكَ</قول></مقطع>
  <مقطع هوية='١٢٢٤٥'>وَأَشْبَاْهُ هٰذَا</مقطع>

  <مقطع هوية='٥٠٩٠٥'>وَأَمَّا الْمُحَاْلُ الْكَذِبُ </مقطع>
  <مقطع هوية='٦٨٨٣٥'> فَأَنْ تَقُوْلَ</مقطع>
  <مقطع هوية='٦٧١٨١'><قول هوية='٤٨٤٠١'>سَوْفَ أَشْرَبُ مَاْءَ الْبَحْرِ أَمْسِ</قول></مقطع>

