<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨"
     درنبورج="١-٧"
     البكاء="١-٧٢"
     هارون="١-٢٥"
     يعقوب="١-٥٢"
     رقم="٦">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ الاِسْتِقَامَةِ مِنَ الْكَلَامِ وَالْإِحَالَةِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">فَمِنْهُ</مقطع>
  <مقطع رقم="٣">مُسْتَقِيمٌ حَسَنٌ</مقطع>
  <مقطع رقم="٤">وَمُحَالٌ</مقطع>
  <مقطع رقم="٥">وَمُسْتَقِيمٌ كَذِبٌ</مقطع>
  <مقطع رقم="٦">وَمُسْتَقِيمٌ قَبِيحٌ</مقطع>
  <مقطع رقم="٧"> وَمَا هُوَ مُحَالٌ كَذِبٌ</مقطع>

  <مقطع رقم="٨">فَأَمَّا الْمُسْتَقِيمُ الْحَسَنُ</مقطع>
  <مقطع رقم="٩">فَقَوْلُكَ <قول مثال="١">أَتَيْتُكَ أَمْسِ</قول></مقطع>
  <مقطع رقم="١٠"> وَ<قول مثال="١">سَآتِيْكَ غَدًا</قول></مقطع>

  <مقطع رقم="١١">وأَمَّا الْمُحَالُ</مقطع>
  <مقطع رقم="١٢">فَأَنْ تُنْقَضَ أَوَّلُ كَلَامِكَ بِآخِرِهِ</مقطع>
  <مقطع رقم="١٣">فَتَقُولَ  <قول مثال="١">أَتَيْتُكَ غَدًا</قول></مقطع>
  <مقطع رقم="١٤"> وَ<قول مثال="١">سَآتِيكَ أَمْسِ</قول></مقطع>

  <مقطع رقم="١٥">وَأَمَّا الْمُسْتَقِيمُ الْكَذِبُ</مقطع>
  <مقطع رقم="١٦">فَقَوْلُكَ  <قول مثال="١">حَمَلْتُ الْجَبَلَ</قول></مقطع>
  <مقطع رقم="١٧">و<قول مثال="١">شَرِبْتُ مَاءَ الْبَحْرِ</قول></مقطع>
  <مقطع رقم="١٨"> وَنَحْوُهُ</مقطع>

  <مقطع رقم="١٩">وَأَمَّا الْمُسْتَقِيمُ الْقَبِيحُ</مقطع>
  <مقطع رقم="٢٠">فَأَنْ تَضَعَ اللَّفْظَ في غَيْرِ مَوْضِعِهِ</مقطع>
  <مقطع رقم="٢١">نَحْوُ قَوْلِكَ</مقطع>
  <مقطع رقم="٢٢"><قول مثال="١">قَدْ زَيْدًا رَأَيْتُ</قول></مقطع>
  <مقطع رقم="٢٣">و<قول مثال="١">كَيْ زَيْدٌ يَأْتِيَكَ</قول></مقطع>
  <مقطع رقم="٢٤"> وَأَشْباهُ هذا</مقطع>

  <مقطع رقم="٢٥">وَأَمَّا الْمُحَالُ الْكَذِبُ </مقطع>
  <مقطع رقم="٢٦"> فَأَنْ تَقُولَ</مقطع>
  <مقطع رقم="٢٧">  <قول مثال="١">سَوْفَ أَشْرَبُ مَاءَ الْبَحْرِ أَمْسِ</قول></مقطع>

  <التحرير>
    <تشكيل  نسخة="1" نسبة="90"/>
    <تقطيع  نسخة="1"/>
    <أقوال  نسخة="1" نسبة="100"/>
  </التحرير>

</باب>

