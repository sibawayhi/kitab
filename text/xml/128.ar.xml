  <عنوان>
    <مقطع هوية='٧٧٧٨٩'>هٰذَا بَاْب مَا يَنْتَصِبُ لِأَنَّهُ لَيْسَ مِنْ ٱسْمِ مَا قَبْلَهُ وَلَا هُوَ هُوَ</مقطع>
  </عنوان>
  <مقطع هوية='٨٦٣٣٣'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤١٩٠٣'>هُوَ ابْنُ عَمِّي دِنْيًا</قول>
  </مقطع>
  <مقطع هوية='٢٤٣٨٥'>و <قول هوية='٢٨٣٣٥'>هُوَ جَاْرِي بَيْتَ بَيْتَ</قول>
  </مقطع>
  <مقطع هوية='١٢٣٨١'>فهٰذِهِ أَحْوَاْلٌ قَدْ وَقَعَ فِي كُلِّ وَاحِدٍ مِنْهَا شَيْءٌ</مقطع>
  <مقطع هوية='٢٧٥١٣'>وَاْنْتَصَبَ لِأنَّ هٰذَا الْكَلَاْمُ قَدْ عَمِلَ فِيْهَا</مقطع>
  <مقطع هوية='٥٧١٦١'>كَمَا عَمِلَ <حرف>الرَّجُلُ</حرف> فِي <حرف>الْعِلْمِ</حرف> حِيْنَ قُلْتَ <قول هوية='٨٩٣٣٢'>أَنْتَ الرَّجُلُ عِلْمًا</قول>
  </مقطع>
  <مقطع هوية='٢٣٢٥٥'>فَاْلْـ<حرف>ـعِلْمُ</حرف> مُنْتَصِبٌ عَلَى مَا فَسَّرْتُ لَكَ</مقطع>
  <مقطع هوية='٢٣٤١١'>وَعَمِلَ فِيْهِ مَا قَبْلَهُ</مقطع>
  <مقطع هوية='٣٦٥١٨'>كَمَا عَمِلَ <حرف>عِشْرُوْنَ</حرف> فِي <حرف>الدِّرْهَمِ</حرف> حِيْنَ قُلْتَ <قول هوية='٢٤١٠٠'>عِشْرُوْنَ دِرْهَمًا</قول>
  </مقطع>
  <مقطع هوية='٨٦٩٧٥'>لِأنَّ <حرف>الدِّرْهَمُ</حرف> لَيْسَ مِنْ ٱسْمِ <حرف>الْعِشْرِيْنَ</حرف> وَلَا هُوَ هِيَ</مقطع>
  <مقطع هوية='٢٠٤٩٧'>ومِثْلُ ذٰلِكَ <قول هوية='٨١٩٨٠'>هٰذَا دِرْهَمٌ وَزْنًا</قول>
  </مقطع>
  <مقطع هوية='٧٨٧٤٥'>ومِثْلُ ذٰلِكَ <قول هوية='٠٩٨٦٦'>هٰذَا حَسِيْبٌ جِدًّا</قول>
  </مقطع>
  <مقطع هوية='٤٩٧٤٤'>ومِثْلُ ذٰلِكَ <قول هوية='٩٦٩٧٢'>هٰذَا عَرَبِيٌّ حَسْبَهُ</قول>
  </مقطع>
  <مقطع هوية='٧٦٩١٢'>حَدَّثَنَا بِذٰلِكَ أَبُو الْخَطَّاْبِ عَمَّنْ نَثِقُ بِهِ مِنَ الْعَرَبِ</مقطع>
  <مقطع هوية='٧٩٨٩٢'>جَعَلَهُ بِمَنْزِلَةِ <حرف>الدِّنْي</حرف> وَ<حرف>الْوَزْنِ</حرف>
  </مقطع>
  <مقطع هوية='٧٠٦٧٦'>كَأَنَّهُ قَاْلَ <قول هوية='٧٣٠٩١'>هُوَ عَرَبِيٌّ اكْتِفَاْءً</قول>
  </مقطع>
  <مقطع هوية='٤٨٢٩٨'>فَهٰذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية='٤٥٩٣٧'>وَلَزِمَتْهُ الْإِضَاْفَةُ كَمَا لَزِمَتْ <حرف>جَهْدَهُ</حرف> وَ<حرف>طَاْقَتَهُ</حرف>
  </مقطع>
  <مقطع هوية='٤٣٢٤٠'>ومَا لَمْ يُضَفْ مِنْ هٰذَا وَلَمْ تَدْخُلْهُ الْأَلِفُ وَاللَّاْمُ</مقطع>
  <مقطع هوية='٦٩٦١١'>فهُوَ بِمَنْزِلَةِ مَا لَمْ يُضَفْفِيْمَا ذَكَرْنَا مِنَ الْمَصَاْدِرِ</مقطع>
  <مقطع هوية='٨٨٠٩٧'>نَحْوَ<قول هوية='٣٩١٦٧'>لَقِيْتُهُ كِفَاْحًا</قول> وَ<قول هوية='٠٥٩٥٦'>أَتَيْتُهُ جَهَاْرًا</قول>
  </مقطع>
  <مقطع هوية='٠٦٢٧٩'>ومِثْلُ ذٰلِكَ <قول هوية='٤٢٨٨٦'>هٰذِهِ عِشْرُوْنَ مِرَاْرًا</قول> و<قول هوية='٦٨٦٣٣'>هٰذِهِ عِشْرُوْنَ أَضْعَاْفًا</قول>
  </مقطع>
  <مقطع هوية='٨٣٦٧٢'>وَزَعَمَ يُوْنُس أَنْ قَوْمًا يَقُوْلُوْنَ <قول هوية='١٦٥٨٠'>هٰذِهِ عِشْرُوْنَ أَضْعَاْفُهَا</قول> [و<قول هوية='٣٩٥٥٩'>هٰذِهِ عِشْرُوْنَ أَضْعَاْفٌ</قول> أَيْ مُضَاْعَفَةٌ ]</مقطع>
  <مقطع هوية='٧٧٥٦٦'>وَاْلنَّصْبُ أَكْثَرُ</مقطع>
  <مقطع هوية='٨٦٩٦٤'>ومِثْلُ ذٰلِكَ <قول هوية='٠١٥٢٧'>هٰذَا دِرْهَمٌ سَوَاْءٌ</قول>
  </مقطع>
  <مقطع هوية='٤٧٥٦٥'>كَأَنَّهُ قَاْلَ <قول هوية='٩١٩٧٣'>هٰذَا دِرْهَمٌ اسْتِوَاْءٌ</قول>
  </مقطع>
  <مقطع هوية='٧٨٥٨٠'>فهٰذَا تَمْثِيْلٌ وَإِنْ لَمْ يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية='٢٢٥٠٠'>قَاْلَ عَزَّ وَجَلَّ <آية هوية='٩٧١٨٨'>فِي أَرْبَعَةِ أَيَّاْمٍ سَوَاْءً لِلسَّاْئِلِيْنَ</آية>
  </مقطع>
  <مقطع هوية='٤٥٤٣٩'>وَقَدْ قَرَأَ نَاْسٌ <آية هوية='٢٥١٢٦'>فِي أَرْبَعَةِ أَيَّاْمٍ سَوَاْءٍ</آية>
  </مقطع>
  <مقطع هوية='٩٥٧٩٤'>قَاْلَ الْخَلِيْلُ جَعَلَهُ بِمَنْزِلَةِ مُسْتَوِيَاْتٍ</مقطع>
  <مقطع هوية='٥٨٦٤٩'>وَتَقُوْلُ <قول هوية='٨٧٢٠٨'>هٰذَا دِرْهَمٌ سَوَاْءٌ</قول> كَأَنَّكَ قُلْتَ <قول هوية='٦٣٢١٢'>هٰذَا دِرْهَمٌ تَاْمٌّ</قول>
  </مقطع>

