<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٨٢"
     درنبورج="١-٣٣٥"
     البكاء="٤-٢٧"
     هارون="٢-٣٦٢"
     يعقوب="٢-٣٨٤"
     رقم="٢٠٩">

  <عنوان>
    <مقطع>هُذَا بَابُ مَا يَجُوزُ فِي الشَّعْرِ مِنْ إيَّا وَلَا يَجُوزُ فِي الْكَلَامِ</مقطع>
  </عنوان>
  <مقطع>فَمِنْ ذَلِكَ قَوْلُ حُمَيْدٍ الْأَرْقَطِ</مقطع>

  <شاهدة>
    <بيت>
      <مصراع>إِلَيْكَ حَتَّى بَلَغَتْ إيَّاكَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع>وَقَالَ الْآخَرُ لِبَعْضِ اللَّصَوْصِ</مقطع>

  <شاهدة>
    <بيت>
      <مصراع>كَأَنَّا يَوْمَ قُرَّى إ</مصراع>
      <مصراع>نَّمَا نَقْتُلُ إيَّانَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>[ قُتِلْنْا مِنْهُمْ كَلَّ</مصراع>
      <مصراع>فَتًى أَبْيَضَ حُسَّانَاَ</مصراع>
    </بيت>
  </شاهدة>

  <التحرير>
    <تشكيل  نسخة="0" نسبة="100"/>
    <توسيم  نسخة="0"/>
    <أقوال  نسخة="0" نسبة="0"/>
    <شواهد  نسخة="0" نسبة="0"/>
  </التحرير>

</باب>
