<?xml version="1.0" encoding="utf-8"?>

<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٢٥١"
     درنبورج="٢-٢٦٩"
     البكاء="٥-٤٠٧"
     هارون="٤-٩٩"
     يعقوب="٤-٢١٦"
     رقم="٤٦٧">

  <التحرير>
    <تشكيل  نسخة="1" نسبة="0"/>
    <تقطيع  نسخة="1"/>
    <أقوال  نسخة="1" نسبة="0"/>
    <شواهد  نسخة="1" نسبة="0"/>
  </التحرير>

  <عنوان>
    <مقطع>هذا باب يستغنى فيه عن ما أفعله بما أفعل فعله</مقطع>
  </عنوان>
  <مقطع>وعن أفعل منه بقولهم هو أفعل منه فعلاً كما استغنى بتركت عن ودعت وكما استغنى بنسوةٍ عن أن يجمعوا المرأة على لفظها</مقطع>
  <مقطع>وذلك في الجواب ألا ترى أنك لا تقول ما أجوبه إنما تقول ما أجود جوابه ولا تقول هو أجوب منه ولكن هو أجود منه جواباً ونحو ذلك وكذلك لا تقول أجوب به وإنما تقول أجود بجوابه ولا يقولون في قال يقيل ما أقيله استغنوا بما أكثر قائلته وما أنومه في ساعة كذا وكذا كما قالوا تركت ولم يقولوا ودعت</مقطع>
</باب>
