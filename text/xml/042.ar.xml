<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٠٨"
     درنبورج="١-٨٨"
     البكاء="١-٢٨٤"
     هارون="١-٢١١"
     يعقوب="١-٢٧٢"
     رقم="٤٢">

  <عنوان>
    <مقطع هوية='٥١٤٤٣'>هٰذَا بَابُ اسْتِعْمَالِ الْفِعْلِ في اللَّفْظِ لَا في الْمَعْنَى</مقطع>
    <مقطع هوية='٢٠٩٤١'>لِاتِّساعِهِمْ في الْكَلَامِ وَالْإِيجَازِ وَالِاخْتِصَارِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٨٦٠٠'>فَمِنْ ذٰلِكَ أَنْ تَقُوْلَ عَلَى قَوْلِ السَّائِلِ</مقطع>
  <مقطع هوية='٧١٧٩٦'>
    <قول هوية='٦١٩٨٩'>كَمْ صِيْدَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع هوية='٦٧٤٤٦'>وَ<حرف>كَمْ</حرف>   غَيْرُ ظَرْفٍ لِمَا ذَكَرْتُ لَكَ مِنَ الاتِّسَاعِ وَالْإِيجَازِ</مقطع>
  <مقطع هوية='٥٩٨٩٥'>فَتَقُوْلُ <قول هوية='٠٩٢٥٩'>صِيْدَ عَلَيْهِ يَوْمَانِ</قول>
  </مقطع>
  <مقطع هوية='٧٧٠٥٧'>وَإِنَّمَا الْمَعْنَى <قول هوية='٩٢٧٨١'>صِيْدَ عَلَيْهِ الْوَحْشُ في يَوْمَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٧٩٩٩١'>وَلَكِنَّهُ اتَّسَعَ وَاخْتَصَرَ</مقطع>
  <مقطع هوية='٣٧٦٣٢'>وَلِذٰلِكَ أَيْضًا وَضَعَ السَّائِلُ      <حرف>كَمْ</حرف>   غَيْرَ ظَرْفٍ</مقطع>
  <مقطع هوية='١٠٤٧٥'>وَمِنْ ذٰلِكَ أَنْ تَقُوْلَ      <قول هوية='٧٤٨٩٠'>كَمْ وُلِدَ لَهُ</قول>
  </مقطع>
  <مقطع هوية='٤٣٩٢٩'>فَيَقُوْلُ      <قول هوية='٤٢٥٣٢'>سِتُّوْنَ عَامًا</قول>
  </مقطع>
  <مقطع هوية='٩١٢٧٣'>فَالْمَعْنَى      <قول هوية='٨٨٦٠٩'>وُلِدَ لَهُ الْأَوْلَادُ وَوُلِدَ لَهُ الْوَلَدُ سِتِّيْنَ عَامًا</قول>
  </مقطع>
  <مقطع هوية='٥٧٦٨٧'>وَلَكِنَّهُ اتَّسَعَ وَأَوْجَزَ</مقطع>
  <مقطع هوية='٩٨٧٢٢'>وَمِنَ ذٰلِكَ أَنْ تَقُوْلَ      <قول هوية='٥٧٨٢١'>كَمْ سِيْرَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع هوية='٠٧٠١٢'>وَ<حرف>كَمْ</حرف>   غَيْرُ ظَرْفٍ فَيَقُوْلُ      <قول هوية='٧٣٠٦٧'>يُوْمُ الْجُمُعَةِ</قول>   وَ<قول هوية='١٦٢٤٧'>يَوْمَانِ</قول>
  </مقطع>
  <مقطع هوية='٥٦٦٠٦'>فَكَمْ هَاهُنَا بِمَنْزِلَةِ قَوْلِهِ      <قول هوية='٦١٩٣٤'>مَا صِيْدَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع هوية='٢١٩٧٢'>وَ<قول هوية='٧٨٩٩١'>مَا وُلِدَ لَهُ مِنَ الدَّهْرِ وَالْأَيَّامِ</قول>
  </مقطع>
  <مقطع هوية='٢٢٠٤٧'>فَلَيْسَ      <حرف>كَمْ</حرف>   ظَرْفًا كَمَا أَنَّ      <حرف>مًا</حرف>   لَيْسَ بِظَرْفٍ</مقطع>
  
  <مقطع هوية='٠٠٤٠١'>وَمِنْ ذٰلِكَ أَنَ يَقُوْلَ      <قول هوية='١٧١٧١'>كَمْ ضُرِبَ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٨٩٥٢١'>فَتَقُوْلُ      <قول هوية='٥٩٣٨٩'>ضُرِبَ بِهِ ضَرْبَتَانِ</قول>
  </مقطع>
  <مقطع هوية='١٩٣٩٤'>وَ<قول هوية='٦٦٤٨٤'>ضُرِبَ بِهِ ضَرْبٌ كَثِيْرٌ</قول>
  </مقطع>
  <مقطع هوية='٦٢١٣٤'>وَمِمَّا جَاءَ عَلَى اتِّسَاعِ الْكَلَامِ وَالِاخْتِصَارِ قَوْلُهُ تَعَالَى جَدُّهُ      <آية هوية='٨٠٠٤٢'>وَٱسْأَلِ الْقَرْيَةَ الَّتِي كُنَّا فِيْهَا وَالْعِيْرَ الَّتِي أَقْبَلْنَا فِيْهًا</آية>
  </مقطع>
  <مقطع هوية='٢٩٠٠٧'>إِنَّمَا يُرِيْدُ      <حرف>أَهْلَ الْقَرْيَةِ</حرف>   فَاخْتَصَرَ وَعَمِلَ الْفِعْلُ في      <حرف>الْقَرْيَةِ</حرف>
  </مقطع>
  <مقطع هوية='٣٥٩٠٧'>كَمَا كَانَ عَامِلًا في الْـ<حرف>أَهْلِ</حرف>   لَوْ كَانَ هَاهُنًا</مقطع>
  <مقطع هوية='٠١٨٥٣'>وَمِثْلُهُ      <آية هوية='١١٤٢٧'>بَلْ مَكْرُ اللَّيْلِ وَالنَّهَارِ</آية>   وَإِنَّمَا الْمَعْنَى      <قول هوية='٦٠٩٨٩'>بَلْ مَكْرُكُمْ في اللَّيْلِ وَالنَّهَارِ</قول>
  </مقطع>
  <مقطع هوية='٣٢٤٤٥'>وَقَالَ عَزَّ وَجَلَّ      <آية هوية='٠٠٢٠٥'>وَلَكِنَّ الْبِرَّ مَنْ آمَنَ بِاللّٰهِ</آية>
  </مقطع>
  <مقطع هوية='٦٤٨٧٦'>وَإِنَّمَا هُوَ<قول هوية='٧٣٩٥٨'>وَلَكِنَّ الْبِرَّ بِرُّ مَنْ آمَنَ بِاللّٰهِ وَالْيَوْمِ الْآخِرِ</قول>
  </مقطع>
  <مقطع هوية='٩٨٩٩٤'>وَمِثْلُهُ في الاتِّسَاعِ قَوْلُهُ عَزَّ وَجَلَّ      <آية هوية='٧٨٦٢٧'>وَمَثَلُ الَّذِيْنَ كَفَرُوَا كَمَثَلِ الَّذِي يَنْعِقُ بِمَا لَايَسْمَعُ إِلَّا دُعَاءً وَنِدَاءً</آية>
  </مقطع>
  <مقطع هوية='٢٧٥٩٩'>فَلَمْ يُشَبَّهُوا بِمَا يَنْعِقُ</مقطع>
  <مقطع هوية='٢٤٦٥٣'>وَإِنَّمَا شُبِّهُوْا بِالمَنْعُوقِ بِهِ</مقطع>
  <مقطع هوية='٧٦٩٩٥'>وَإِنَّمَا الْمَعْنَى      <قول هوية='٣٠١٦٢'>مَثَلُكُمْ وَمَثَلُ الَّذِيْنَ كَفَرُوَا كَمَثَلِ النَّاعِقُ وَالمَنْعُوقَ بِهِ الَّذِىْ لَا يَسْمَعُ</قول>
  </مقطع>
  <مقطع هوية='٢٩٩٨٥'>وَلَكِنَّهُ جَاءَ عَلَى سَعَةِ الْكَلَامِ وَالْإِيجَازِ لِعِلْمِ الْمُخَاطَبِ بِالْمَعْنَى</مقطع>
  
  <مقطع هوية='٣١٦٥٦'>وَمِثْلُ ذٰلِكَ مِنْ كَلَامِهِمْ      <قول هوية='٦٨٩٩١'>بَنُوْ فُلَانٍ يَطَؤُهُمْ الطَّرِيْقُ</قول>
  </مقطع>
  <مقطع هوية='٣٥١٥٦'>يُرِيْدُ      <قول هوية='٢٥١٢١'>يَطَؤُهُمْ أَهْلُ الطَّرِيْقِ</قول>
  </مقطع>
  <مقطع هوية='٨٨٧٨٨'>وَقَالُوْا      <قول هوية='٢٦١١٣'>صِدْنَا قَنَوَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٥٥٤٧٨'>وَإِنَّمَا يُرِيْدُ      <قول هوية='٦٥٥٦٦'>صِدْنَا بِقَنَوَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٣٥١٠٥'>أَوْ      <قول هوية='١٢٣٣٢'>صِدْنَا وَحَشَ قَنَوَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٤٠٢٣'>وَإِنَّمَا قَنَوَانِ اسْمُ أَرْضٍ</مقطع>
  <مقطع هوية='٣٧٣٤٤'>وَمِثْلُهُ في السَّعَةِ      <قول هوية='٥٠١٣٠'>أَنْتَ أَكْرَمُ عَلَيَّ مِنْ أَنْ أَضْرِبَكَ</قول>
  </مقطع>
  <مقطع هوية='٣٤٢٣٦'>وَ<قول هوية='٩١١٠٦'>أَنْتَ أَنْكَدُ مِنْ أَنْ تَتْرُكَهُ</قول>
  </مقطع>
  <مقطع هوية='٩٤٧٦٦'>إِنَّمَا تُرِيْدُ      <قول هوية='٢٢١٢١'>أَنْتَ أَكْرَمُ عَلَيَّ مِنْ صَاحِبِ الضَّرْبِ</قول>
  </مقطع>
  <مقطع هوية='٩٤٩١٨'>وَ<قول هوية='١٨٦٦٦'>أَنْتَ أَنْكَدُ مِنْ صَاحِبِ تَرْكِهِ</قول>
  </مقطع>
  <مقطع هوية='٠٥٧٨٥'>لِأَنَّ قَوْلَكَ      <قول هوية='٢١٠٣٢'>أَنْ أَضْرِبَكَ</قول>   وَ<قول هوية='٣١٤٥٦'>أَنْ تَتْرُكَهُ</قول>   هُوَ الضَّرْبُ وَالتَّرْكُ</مقطع>
  <مقطع هوية='٢٦٦٥١'>لِأَنَّ      <حرف>أَنْ</حرف>   اسْمٌ وَ<حرف>تَتْرُكَهُ</حرف>   وَ<حرف>أَضْرِبَكَ</حرف>   مِنْ صِلَتِهِ</مقطع>
  <مقطع هوية='٩٥٣٧١'>كَمَا تَقُوْلُ      <قول هوية='٥٩٦٢٢'>يَسُوءُنِي أَنْ أَضْرِبَكَ</قول>
  </مقطع>
  <مقطع هوية='٢١٤٤٥'>أَيْ      <قول هوية='٥٧٠٦٥'>يَسُوءُنِي ضَرْبُكَ</قول>
  </مقطع>
  <مقطع هوية='٧٨٢٠٦'>وَلَيْسَ يُرِيْدُ      <قول هوية='٤٩١٢٣'>أَنْتَ أَكْرَمُ عَلَيَّ مِنَ الضَّرْبِ</قول>
  </مقطع>
  <مقطع هوية='٣٨٢٣٤'>وَلَكِنْ     <قول هوية='٦٤١٥٩'>أَكْرَمُ عَلَيَّ مِنْ صَاحِبِ الضَّرْبِ</قول>
  </مقطع>
  <مقطع هوية='٤٦٦٦٠'>وَقَالَ الْجَعْدِيّ</مقطع>
  
  <شاهدة هوية='١٤٤٤٣'>
    <بيت>
      <مصراع>كَأَنَّ عَذِيْرَهُمْ بِجُنُوْبِ سِلَّى</مصراع>
      <مصراع>نَعَامٌ قَاقَ في بَلَدٍ قِفَارِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٠٩٧'>
    <بدل>
      <هارون>الْعَذِيْرُ الصَّوْتُ</هارون>
  </بدل>وَمِنْ ذٰلِكَ قَوْلُ عَامِرِ بْنِ الْطُّفَيْلِ</مقطع>
  <شاهدة هوية='٥١٣٣٥'>
    <بيت>
      <مصراع>فَلأَبَغِيَنَّكُمُ قَنًا وَعُوَارِضًا</مصراع>
      <مصراع>وَلَأُقْبِلَنَّ الْخَيْلَ لَابَةَ ضَرْغِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٠٦٦٩'>
    <بدل>
      <هارون>إِنَّمَا أُرِيْدَ      <حرف>عَذِيْرَ نَعَام</حرف>   وَقَنًا وَعُوَارِض</هارون>
      </بدل>يُرِيْدُ      <حرف>بِقَنًا</حرف>
      <بدل>
	<هارون>وَعُوَارِض</هارون>
  </بدل>وَلَكِنَّهُ حَذَفَ وَأَوْصَلَ الْفِعْلَ</مقطع>

  <مقطع هوية='٩٩٥٧٧'>وَمِنْ ذٰلِكَ قَوْلُ سَاعِدَةَ</مقطع>
  <شاهدة هوية='٨٠٥٧٦'>
    <بيت>
      <مصراع>لَدْنٌ بِهَزِّ الكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
      <مصراع>فِيْهِ كَمَا عَسَلَ الطَّرِيْقَ الثَّعْلَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٨٩٨٤'>يُرِيْدُ      <حرف>فِي الطَّرِيْقِ</حرف>
  </مقطع>
  <مقطع هوية='٣٢١٩٤'>وَمِنْ ذٰلِكَ قَوْلُهُمْ      <قول هوية='٨٨٦٣٥'>أَكَلْتُ أَرْضَ كَذَا وَكَذًا</قول>
  </مقطع>
  <مقطع هوية='١٤٦٣٤'>وَ<قول هوية='٣٠٩٩٥'>أَكَلْتُ بَلْدَةَ كَذَا وَكَذًا</قول>
  </مقطع>
  <مقطع هوية='٢٩٩٤٤'>إِنَّمَا   <بدل>
  <هارون>أَرَادَ أَصَابَ مِنْ خَيْرِهَا وَ</هارون>
  <يعقوب>يُريدُ أَنَّهُ</يعقوب>
  </بدل>أَكَلَ مِنْ ذٰلِكَ وَشَرِبَ   <بدل>
  <يعقوب>وَأَصَابَ مِنْ خَيْرِهًا</يعقوب>
</بدل>
  </مقطع>
  <مقطع هوية='٢٩٣٨٩'>وَهٰذَا الْكَلَامُ كَثِيْرٌ مِنْهُ   مَا مَضَىْ وَهُوَ أَكْثَرُ مِنْ أُحْصِيَهْ</مقطع>
  <مقطع هوية='٦٧٠٦٨'>وَمِنْهُ مَا سَتَرَاهُ أَيْضا فِيْمَا يُسْتَقْبَلُ إِنِ شَاءَ اللّٰهُ</مقطع>
  <مقطع هوية='٨٠١٤٣'>وَ هٰذا أَنْثَرُ مِنْ أَنْ يُحْصَى</مقطع>
  <مقطع هوية='٦٧٩٧٤'>وَمِنْهُ قَوْلُهُمْ      <قول هوية='٧٨٥٨٧'>هَذِهِ الظُّهْرُ أَوِ الْعَصْرُ أَوِ الْمَغْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٧٠٦١٩'>إِنَّمَا يُرِيْدُ      <قول هوية='٣٥٧٥٤'>صَلَاةَ هٰذَا الْوَقْتِ</قول>
  </مقطع>
  <مقطع هوية='٢٢٣١٩'>وَ<قول هوية='٨١٨٧١'>اجْتَمَعَ الْقَيْظُ</قول>
  </مقطع>
  <مقطع هوية='٣٤٩٦٥'>يُرِيْدُ      <قول هوية='٨٦٨٢٣'>اجْتَمَعَ النَّاسُ في الْقَيْظِ</قول>
  </مقطع>
  <مقطع هوية='١٣٤٣١'>وَقَالَ الْحُطَيْئَةُ</مقطع>
  <شاهدة هوية='٩٠٤٣٦'>
    <بيت>
      <مصراع>وَشَرُّ الْمَنَايَا مَيَّتٌ بَيْنَ أَهْلِهِ</مصراع>
      <مصراع>كَهُلْكِ الْفَتَى قَدْ أَسْلَمَ الْحَىَّ حَاضِرُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٢٣٣'>يُرِيْدُ مَنِيَّةُ مَيَّتٍ</مقطع>
