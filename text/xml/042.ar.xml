     بلاق="١-١٠٨"
     درنبورج="١-٨٨"
     البكاء="١-٢٨٤"
     هارون="١-٢١١"
     يعقوب="١-٢٧٢"
     رقم="٤٢">

  <عنوان>
    <مقطع هوية='٥١٤٤٣'>هٰذَا بَاْبُ اسْتِعْمَاْلِ الْفِعْلِ فِي اللَّفْظِ لَا فِي الْمَعْنَى</مقطع>
    <مقطع هوية='٢٠٩٤١'>لِاتِّساْعِهِمْ فِي الْكَلَاْمِ وَالْإِيْجَاْزِ وَالِاخْتِصَاْرِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٨٦٠٠'>فَمِنْ ذٰلِكَ أَنْ تَقُوْلَ عَلَى قَوْلِ السَّاْئِلِ <قول هوية='٦١٩٨٩'>كَمْ صِيْدَ عَلَيْهِ</قول></مقطع>
  <مقطع هوية='٦٧٤٤٦'>وَ<حرف>كَمْ</حرف> غَيْرُ ظَرْفٍ لِمَا ذَكَرْتُ لَكَ مِنَ الاتِّسَاْعِ وَالْإِيْجَاْزِ</مقطع>
  <مقطع هوية='٥٩٨٩٥'>فَتَقُوْلُ <قول هوية='٠٩٢٥٩'>صِيْدَ عَلَيْهِ يَوْمَاْنِ</قول>
  </مقطع>
  <مقطع هوية='٧٧٠٥٧'>وَإِنَّمَا الْمَعْنَى <قول هوية='٩٢٧٨١'>صِيْدَ عَلَيْهِ الْوَحْشُ فِي يَوْمَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٧٩٩٩١'>وَلَكِنَّهُ اتَّسَعَ وَاخْتَصَرَ</مقطع>
  <مقطع هوية='٣٧٦٣٢'>وَلِذٰلِكَ أَيْضًا وَضَعَ السَّاْئِلُ <حرف>كَمْ</حرف> غَيْرَ ظَرْفٍ</مقطع>
  <مقطع هوية='١٠٤٧٥'>وَمِنْ ذٰلِكَ أَنْ تَقُوْلَ <قول هوية='٧٤٨٩٠'>كَمْ وُلِدَ لَهُ</قول>
  </مقطع>
  <مقطع هوية='٤٣٩٢٩'>فَيَقُوْلُ <قول هوية='٤٢٥٣٢'>سِتُّوْنَ عَاْمًا</قول>
  </مقطع>
  <مقطع هوية='٩١٢٧٣'>فَالْمَعْنَى <قول هوية='٨٨٦٠٩'>وُلِدَ لَهُ الْأَوْلَاْدُ</قول></مقطع>
  <مقطع هوية='٧٧٣٨٤'>وَ<قول هوية='٦٢٢٠١'>وُلِدَ لَهُ الْوَلَدُ</قول></مقطع>
  <مقطع هوية='١٤٥١٩'><حرف>سِتِّيْنَ عَاْمًا</حرف></مقطع>
  <مقطع هوية='٥٧٦٨٧'>وَلَكِنَّهُ اتَّسَعَ وَأَوْجَزَ</مقطع>
  <مقطع هوية='٩٨٧٢٢'>وَمِنْ ذٰلِكَ أَنْ تَقُوْلَ <قول هوية='٥٧٨٢١'>كَمْ سِيْرَ عَلَيْهِ</قول></مقطع>
  <مقطع هوية='٠٧٠١٢'>وَ<حرف>كَمْ</حرف> غَيْرُ ظَرْفٍ فَيَقُوْلُ
  <حرف>يُوْمُ الْجُمُعَةِ</حرف> وَ<حرف>يَوْمَاْنِ</حرف></مقطع>
  <مقطع هوية='٥٦٦٠٦'>فَـ<حرف>كَمْ</حرف> هَاْهُنَا بِمَنْزِلَةِ قَوْلِهِ <قول هوية='٦١٩٣٤'>مَا صِيْدَ عَلَيْهِ</قول></مقطع>
  <مقطع هوية='٢١٩٧٢'>وَ<قول هوية='٧٨٩٩١'>مَا وُلِدَ لَهُ مِنَ الدَّهْرِ وَالْأَيَّاْمِ</قول></مقطع>
  <مقطع هوية='٢٢٠٤٧'>فَلَيْسَ <حرف>كَمْ</حرف> ظَرْفًا كَمَا أَنَّ <حرف>مَا</حرف> لَيْسَ بِظَرْفٍ</مقطع>
  <مقطع هوية='٠٠٤٠١'>وَمِنْ ذٰلِكَ أَنَ يَقُوْلَ <قول هوية='١٧١٧١'>كَمْ ضُرِبَ بِهِ</قول></مقطع>
  <مقطع هوية='٨٩٥٢١'>فَتَقُوْلُ <قول هوية='٥٩٣٨٩'>ضُرِبَ بِهِ ضَرْبَتَاْنِ</قول></مقطع>
  <مقطع هوية='١٩٣٩٤'>وَ<قول هوية='٦٦٤٨٤'>ضُرِبَ بِهِ ضَرْبٌ كَثِيْرٌ</قول>
  </مقطع>
  <مقطع هوية='٦٢١٣٤'>وَمِمَّا جَاْءَ عَلَى اتِّسَاْعِ الْكَلَاْمِ وَالِاخْتِصَاْرِ</مقطع>
  <مقطع هوية='٧٨٨٥٢'>قَوْلُهُ تَعَاْلَى جَدُّهُ
  <آية هوية='٨٠٠٤٢' سورة="١٢" آية="٨٢">وَسْئَلِ ٱلْقَرْيَةَ ٱلَّتِي كُنَّا فِيْهَا وَٱلْعِيْرَ ٱلَّتِي أَقْبَلْنَا فِيْهَا</آية></مقطع>
  <مقطع هوية='٢٩٠٠٧'>إِنَّمَا يُرِيْدُ <حرف>أَهْلَ الْقَرْيَةِ</حرف></مقطع>
  <مقطع هوية='٤٠٢٨٨'>فَاخْتَصَرَ وَعَمِلَ الْفِعْلُ فِي <حرف>الْقَرْيَةِ</حرف></مقطع>
  <مقطع هوية='٣٥٩٠٧'>كَمَا كَاْنَ عَاْمِلًا فِي الْـ<حرف>أَهْلِ</حرف> لَوْ كَاْنَ هَاْهُنًا</مقطع>

  <مقطع هوية='٠١٨٥٣'>وَمِثْلُهُ <آية هوية='١١٤٢٧' سورة="٣٤" آية="٣٣">
  بَلْ مَكْرُ ٱللَّيْلِ وَٱلنَّهَاْرِ</آية></مقطع>
  <مقطع هوية='٩٤٩١٨'>وَإِنَّمَا الْمَعْنَى <قول هوية='٦٠٩٨٩'>بَلْ مَكْرُكُمْ فِي اللَّيْلِ وَالنَّهَاْرِ</قول></مقطع>
  <مقطع هوية='٣٢٤٤٥'>وَقَاْلَ عَزَّ وَجَلَّ <آية هوية='٠٠٢٠٥' سورة="٢"
  آية="١٧٧">وَلَكِنَّ الْبِرَّ مَنْ آمَنَ بِاللّٰهِ</آية></مقطع>
  <مقطع هوية='٦٤٨٧٦'>وَإِنَّمَا هُوَ <قول هوية='٧٣٩٥٨'>وَلَكِنَّ الْبِرَّ بِرُّ مَنْ آمَنَ بِاللّٰهِ وَالْيَوْمِ الْآخِرِ</قول></مقطع>

  <مقطع هوية='٩٨٩٩٤'>وَمِثْلُهُ فِي الاْتِّسَاْعِ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='٤٣٦٢٨'><آية هوية='٧٨٦٢٧' سورة="٢" آية="١٧١">وَمَثَلُ ٱلَّذِيْنَ كَفَرُوا كَمَثَلِ ٱلَّذِي يَنْعِقُ بِمَا لَا يَسْمَعُ إِلَّا دُعَآءً وَنِدَآءً</آية></مقطع>
  <مقطع هوية='٢٧٥٩٩'>فَلَمْ يُشَبَّهُوْا بِـ<حرف>مَا يَنْعِقُ</حرف></مقطع>
  <مقطع هوية='٢٤٦٥٣'>وَإِنَّمَا شُبِّهُوْا بِـ<حرف>المَنْعُوْقِ بِهِ</حرف></مقطع>
  <مقطع هوية='٧٦٩٩٥'>وَإِنَّمَا الْمَعْنَى <قول هوية='٣٠١٦٢'>مَثَلُكُمْ وَمَثَلُ الَّذِيْنَ كَفَرُوْا كَمَثَلِ النَّاْعِقِ وَالمَنْعُوْقِ بِهِ الَّذِي لَا يَسْمَعُ</قول></مقطع>
  <مقطع هوية='٢٩٩٨٥'>وَلَكِنَّهُ جَاْءَ عَلَى سَعَةِ الْكَلَاْمِ وَالْإِيْجَاْزِ لِعِلْمِ الْمُخَاْطَبِ بِالْمَعْنَى</مقطع>

  <مقطع هوية='٣١٦٥٦'>وَمِثْلُ ذٰلِكَ مِنْ كَلَاْمِهِمْ <قول هوية='٦٨٩٩١'>بَنُوْ فُلَاْنٍ يَطَؤُهُمْ الطَّرِيْقُ</قول> </مقطع>
  <مقطع هوية='٣٥١٥٦'>يُرِيْدُ <قول هوية='٢٥١٢١'>يَطَؤُهُمْ أَهْلُ الطَّرِيْقِ</قول></مقطع>
  <مقطع هوية='٨٨٧٨٨'>وَقَاْلُوْا <قول هوية='٢٦١١٣'>صِدْنَا قَنَوَيْنِ</قول></مقطع>
  <مقطع هوية='٥٥٤٧٨'>وَإِنَّمَا يُرِيْدُ <قول هوية='٦٥٥٦٦'>صِدْنَا بِقَنَوَيْنِ</قول></مقطع>
  <مقطع هوية='٣٥١٠٥'>أَوْ <قول هوية='١٢٣٣٢'>صِدْنَا وَحَشَ قَنَوَيْنِ</قول></مقطع>
  <مقطع هوية='٤٤٠٢٣'>وَإِنَّمَا <حرف>قَنَوَاْنِ</حرف> اسْمُ أَرْضٍ</مقطع>
  <مقطع هوية='٣٧٣٤٤'>وَمِثْلُهُ فِي السَّعَةِ <قول هوية='٥٠١٣٠'>أَنْتَ أَكْرَمُ عَلَيَّ مِنْ أَنْ أَضْرِبَكَ</قول></مقطع>
  <مقطع هوية='٣٤٢٣٦'>وَ<قول هوية='٩١١٠٦'>أَنْتَ أَنْكَدُ مِنْ أَنْ تَتْرُكَهُ</قول></مقطع>
  <مقطع هوية='٩٤٧٦٦'>إِنَّمَا تُرِيْدُ <قول هوية='٢٢١٢١'>أَنْتَ أَكْرَمُ عَلَيَّ مِنْ صَاْحِبِ الضَّرْبِ</قول></مقطع>
  <مقطع هوية='٩٤٩١٨'>وَ<قول هوية='١٨٦٦٦'>أَنْتَ أَنْكَدُ مِنْ صَاْحِبِ تَرْكِهِ</قول></مقطع>
  <مقطع هوية='٠٥٧٨٥'>لِأَنَّ قَوْلَكَ <حرف>أَنْ أَضْرِبَكَ</حرف> وَ<حرف>أَنْ تَتْرُكَهُ</حرف> هُوَ الضَّرْبُ وَالتَّرْكُ</مقطع>
  <مقطع هوية='٢٦٦٥١'>لِأَنَّ <حرف>أَنْ</حرف> اسْمٌ وَ<حرف>تَتْرُكَهُ</حرف> وَ<حرف>أَضْرِبَكَ</حرف> مِنْ صِلَتِهِ</مقطع>
  <مقطع هوية='٩٥٣٧١'>كَمَا تَقُوْلُ <قول هوية='٥٩٦٢٢'>يَسُوْءُنِي أَنْ أَضْرِبَكَ</قول></مقطع>
  <مقطع هوية='٢١٤٤٥'>أَيْ <قول هوية='٥٧٠٦٥'>يَسُوْءُنِي ضَرْبُكَ</قول></مقطع>
  <مقطع هوية='٧٨٢٠٦'>وَلَيْسَ يُرِيْدُ <قول هوية='٤٩١٢٣'>أَنْتَ أَكْرَمُ عَلَيَّ مِنَ الضَّرْبِ</قول></مقطع>
  <مقطع هوية='٣٨٢٣٤'>وَلَكِنْ <قول هوية='٦٤١٥٩'>أَكْرَمُ عَلَيَّ مِنْ صَاْحِبِ الضَّرْبِ</قول></مقطع>

  <مقطع هوية='٤٦٦٦٠'>وَقَاْلَ الْجَعْدِيُّ</مقطع>
  <شاهدة هوية='١٤٤٤٣'>
    <بيت>
      <مصراع>كَأَنَّ عَذِيْرَهُمْ بِجَنُوْبِ سِلَّى</مصراع>
      <مصراع>نَعَاْمٌ قَاْقَ فِي بَلَدٍ قِفَاْرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٠٩٧'>وَالْعَذِيْرُ الصَّوْتُ</مقطع>

  <مقطع هوية='٨٠٠٢٦'>وَمِنْ ذٰلِكَ قَوْلُ عَاْمِرِ بْنِ الطُّفَيْلِ</مقطع>
  <شاهدة هوية='٥١٣٣٥'>
    <بيت>
      <مصراع>فَلَأَبْغِيَنَّكُمُ قَنًا وَعُوَاْرِضًا</مصراع>
      <مصراع>وَلَأُقْبِلَنَّ الْخَيْلَ لَاْبَةَ ضَرْغِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٠٦٦٩'>
    إِنَّمَا أُرِيْدَ <حرف>عَذِيْرَ نَعَاْمٍ</حرف> وَ<حرف>قَنًا وَعُوَاْرِض</حرف>
    يُرِيْدُ <حرف>بِقَنًا وَعُوَاْرِض</حرف>
  </مقطع>
  <مقطع هوية='٠٤٠٦٢'>وَلَكِنَّهُ حَذَفَ وَأَوْصَلَ الْفِعْلَ</مقطع>

  <مقطع هوية='٩٩٥٧٧'>وَمِنْ ذٰلِكَ قَوْلُ سَاْعِدَةَ</مقطع>
  <شاهدة هوية='٨٠٥٧٦'>
    <بيت>
      <مصراع>لَدْنٌ بِهَزِّ الكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
      <مصراع>فِيْهِ كَمَا عَسَلَ الطَّرِيْقَ الثَّعْلَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٨٩٨٤'>يُرِيْدُ <حرف>فِي الطَّرِيْقِ</حرف></مقطع>
  <مقطع هوية='٣٢١٩٤'>وَمِنْ ذٰلِكَ قَوْلُهُمْ <قول هوية='٨٨٦٣٥'>أَكَلْتُ أَرْضَ كَذَا وَكَذَا</قول></مقطع>
  <مقطع هوية='١٤٦٣٤'>وَ<قول هوية='٣٠٩٩٥'>أَكَلْتُ بَلْدَةَ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع هوية='٢٩٩٤٤'>إِنَّمَا أَرَاْدَ <قول هوية='٧٦٩١٧'>أَصَاْبَ مِنْ خَيْرِهَا وَأَكَلَ مِنْ ذٰلِكَ وَشَرِبَ</قول>

  <!-- <بدل> -->
