  <مقطع هوية='٥٦٧٠٨' رقم="٢٩٠">وَاعْلَمْ أَنَّ النَّكِرَةَ أَخَفُّ عَلَيْهِمْ مِنَ الْمَعْرِفَةِ</مقطع>
  <مقطع هوية='٤٠١٩٦' رقم="٢٩١">وَهِيَ أَشَدُّ تَمَكُّنًا</مقطع>
  <مقطع هوية='٠٤٨٥٦' رقم="٢٩٢">لِأَنَّ النَّكِرَةَ أَوَّلُ</مقطع>
  <مقطع هوية='٧٦٨١٦' رقم="٢٩٣">ثُمَّ يَدْخُلُ عَلَيْهَا مَا تُعَرَّفُ بِهِ</مقطع>
  <مقطع هوية='٣٩٦١٣' رقم="٢٩٤">فَمِنْ ثَمَّ أَكْثَرُ الْكَلَاْمِ يَنْصَرِفُ فِي النَّكِرَةِ</مقطع>
  <رأس هو="٨">
    <عنوان>الْوَاْحِدُ وَالْجَمِيْعُ</عنوان>
  </رأس>
  <مقطع هوية='٥٣٧٧٨' رقم="٢٩٥">وَاعْلَمْ أَنَّ الْوَاْحِدَ أَشَدُّ تَمَكُّنًا مِنَ الْجَمِيْعِ</مقطع>
  <مقطع هوية='٣٩١٤٨' رقم="٢٩٦">لِأَنَّ الْوَاْحِدَ الْأَوَّلُ</مقطع>
  <مقطع هوية='٤٢١٦١' رقم="٢٩٧">وِمِنْ ثَمَّ</مقطع>
  <مقطع هوية='٦٣٨١٩' رقم="٢٩٨">لَمْ يَصْرِفُوا مَا جَاْءَ مِنَ الْجَمِيْعِ</مقطع>
  <مقطع هوية='٩٨٥٧٠' رقم="٢٩٩">مَا جَاْءَ على مِثَاْلٍ لَيْسَ يَكُوْنُ لِلْوَاْحِدِ</مقطع>
  <مقطع هوية='٦١٦٣٣' رقم="٣٠٠">نَحْوُ <حرف>مَسَاْجِدَ</حرف> وَ<حرف>مَفَاْتِيحَ</حرف>
  </مقطع>
  <رأس هو="٩">
    <عنوان>الْمُذَكَّرُ وَالْمُؤَنَّثُ</عنوان>
  </رأس>
  <مقطع هوية='٧٥٩٠٧' رقم="٣٠١">وَاعْلَمْ أَنَّ الْمُذَكَّرَ أَخَفُّ عَلَيْهِمْ مِنَ الْمَؤَنَّثِ</مقطع>
  <مقطع هوية='٩٢٦٨٥' رقم="٣٠٢">لِأَنَّ الْمُذَكَّرَ أَوَّلُ وَهُوَ أَشَدُّ تَمَكُّنًا</مقطع>
  <مقطع هوية='٥٤٧٨١' رقم="٣٠٣">وَإِنَّمَا يَخْرُجُ التَّأْنِيْثُ مِنَ التَّذْكِيْرِ</مقطع>
  <مقطع هوية='٤٢٠٥٧' رقم="٣٠٤">أَلَا تَرَى أَنَّ <حرف>الشَّيْءَ</حرف> يَقَعُ عَلَى كُلِّ مَا أُخْبِرَ عَنْهُ</مقطع>
  <مقطع هوية='٠٥٢٢٧' رقم="٣٠٥">مِنْ قِبَلِ أَنْ يُعْلَمَ أَذَكَرٌ هُوَ أَوْ أُنْثَى</مقطع>
  <مقطع هوية='٣١١٦١' رقم="٣٠٦">وَ <حرف>الشَّيْءُ</حرف> ذَكَرٌ</مقطع>
  <رأس هو="١٠">
    <عنوان>التَّنْوِيْنُ والصَّرْفُ</عنوان>
  </رأس>
  <مقطع هوية='٣٦٨٨٧' رقم="٣٠٧">فَالتَّنْوِيْنُ عَلَاْمَةٌ لِلْأَمْكَنِ عِنْدَهُمْ وَالْأَخَفِّ عَلَيْهِمْ</مقطع>
  <مقطع هوية='٥٨٦١٩' رقم="٣٠٨">وَتَرْكُهُ عَلَاْمَةٌ لِمَا يَسْتَثْقِلُوْنَ</مقطع>
  <مقطع هوية='٧٢٧٥٨' رقم="٣٠٩">وَسَوْفَ يُبَيَّنُ مَا يَنْصَرِفُ وَمَا لَا يَنْصَرِفُ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع هوية='٤١٤٩٧' رقم="٣١٠">وَجَمِيْعُ مَا لَا يَنْصَرِفُ</مقطع>
  <مقطع هوية='٩٩٦٨٥' رقم="٣١١">إِذَا أَدْخَلْتَ عَلَيْهِ الْأَلِفَ وَاللَّاْمَ</مقطع>
  <مقطع هوية='٦٩١٤٦' رقم="٣١٢">أَوْ أُضِيفَ</مقطع>
  <مقطع هوية='٢٠٣٠٣' رقم="٣١٣">انْجَرَّ</مقطع>
  <مقطع هوية='٨٦٩٩٥' رقم="٣١٤">لِأَنَّهَا أَسْمَاْءٌ أُدْخِلَ عَلَيْهَا مَا يَدْخُلُ عَلَى الْمُنْصَرِفِ</مقطع>
  <مقطع هوية='٧٥٥٤٨' رقم="٣١٥">وَأُدْخِلَ فِيْهَا الْجَرُّ كَمَا يَدْخُلُ فِي الْمُنْصَرِفِ</مقطع>
  <مقطع هوية='٠٩٩٧٩' رقم="٣١٦">وَلَا يَكُوْنُ ذٰلِكَ فِي الْأَفْعَاْلِ</مقطع>
  <مقطع هوية='١١٧٧٠' رقم="٣١٧">وَأَمِنُوا التَّنْوِيْنَ</مقطع>
  <مقطع هوية='٧٥٠٢١' رقم="٣١٨">فَجَمِيْعُ مَا يُتْرَكُ صَرْفُهُ مُضَاْرِعٌ بِهِ الْفِعْلُ</مقطع>
  <مقطع هوية='١٨٧٥٤' رقم="٣١٩">لِأَنَّهُ إِنَّمَا فُعِلَ ذٰلِكَ بِهِ لِأَنَّهُ لَيْسَ لَهُ تَمَكُّنُ غَيْرِهِ</مقطع>
  <مقطع هوية='٤٥٦٠٤' رقم="٣٢٠">كَمَا أَنَّ الْفِعْلَ لَيْسَ لَهُ تَمَكُّنُ الِاسْمِ</مقطع>
  <رأس هو="١١">
    <عنوان>حَذْفُ الآخِر</عنوان>
  </رأس>
  <مقطع هوية='٧٧٤١٤' رقم="٣٢١">وَاعْلَمْ أَنَّ الْآخِرَ</مقطع>
  <مقطع هوية='٥٠٤٠٣' رقم="٣٢٢">إِذَا كَاْنَ يَسْكُنُ فِي الرَّفْعِ حُذِفَ فِي الْجَزْمِ</مقطع>
  <مقطع هوية='٥٤٦٨٨' رقم="٣٢٣">لِئَلَّا يَكُوْنَ الْجَزْمُ بِمَنْزِلَةِ الرَّفْعِ</مقطع>
  <مقطع هوية='٠٢٤٦٣' رقم="٣٢٤">فَحَذَفُوْا كَمَا حَذَفُوْا الْحَرَكَةَ وَنُوْنَ الِاثْنَيْنِ وَالجَمِيْعِ</مقطع>
  <مقطع هوية='٩٩١٩٦' رقم="٣٢٥">وَذٰلِكَ قَوْلُكَ <حرف>لَمْ يَرْمِ</حرف> وَ<حرف>لَمْ يَغْزُ</حرف> وَ<حرف>لَمْ يَخْشَ</حرف>
  </مقطع>
  <مقطع هوية='١٣٢٥٥' رقم="٣٢٦">وَهُوَ فِي الرَّفْعِ سَاْكِنُ الْآخِرِ</مقطع>
  <مقطع هوية='٨٠٣٧٩' رقم="٣٢٧">تَقُوْلُ هُوَ <حرف>يَرْمِيْ</حرف> وَ<حرف>يَغْزُوْ</حرف> وَ<حرف>يَخْشَىْ</حرف>
  </مقطع>
