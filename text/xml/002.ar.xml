  <مقطع هوية='٩٥٩٩٥' رقم="١٤١">وَ<قول هوية='٤٠٤٣٦' رقم="٢٦" مثال="١">رَأَيْتُ الْمُسْلِمِيْنَ</قول>
  </مقطع>
  <مقطع هوية='٦١٩١٦' رقم="١٤٢">وَ<قول هوية='٥٠٨٥٨' رقم="٢٧" مثال="١">مَرَرْتُ بِالْمُسْلِمِيْنَ</قول>
