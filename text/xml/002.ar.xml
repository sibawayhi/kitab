     يعقوب="١-٤١"
     رقم="٢">
  <عنوان>
    <مقطع هوية='٧٥٠٥١' رقم="١">هٰذَاْ بَاْبُ مَجَاْرِي أَوَاْخِرِ الْكَلِمِ مِنَ الْعَرَبِيَّةِ</مقطع>
  </عنوان>
  <رأس هو="٠">
    <عنوان>المَجَاْرِي الثَّماْنِيَةُ</عنوان>
  </رأس>
  <مقطع هوية='٢٢٣٦٥' رقم="٢">وَهِيَ تَجْرِي على ثَمَاْنِي مَجَاْرٍ</مقطع>
  <مقطع هوية='٩٠٨١٧' رقم="٣">على النَّصْبِ وَالْجَرِّ وَالرَّفْعِ وَالْجَزْمِ</مقطع>
  <مقطع هوية='٦١١٥٧' رقم="٤">وَالْفَتْحِ وَالضَّمِّ وَالْكَسْرِ وَالْوَقْفِ</مقطع>
  <مقطع هوية='٩٩١٠٨' رقم="٥">وَهٰذِهِ المَجَاْرِي الثَّمَاْنِيَةُ</مقطع>
  <مقطع هوية='٤٤٨١١' رقم="٦">يَجْمَعُهُنَّ فِي اللَّفْظِ أَرْبَعَةُ أَضْرُبٍ</مقطع>
  <مقطع هوية='٤٤١٥١' رقم="٧">فالنَّصْبُ والفَتْحُ فِي اللَّفْظِ ضَرْبٌ واْحِدٌ</مقطع>
  <مقطع هوية='٤٧٠٤٢' رقم="٨">والجَرُّ والكَسْرُ فِيْهِ ضَرْبٌ وَاْحِدٌ</مقطع>
  <مقطع هوية='٦٦٩٢١' رقم="٩">وَكَذٰلِكَ الرَّفْعُ وَالضَّمُّ</مقطع>
  <مقطع هوية='٧٠٢٨١' رقم="١٠">وَالْجَزْمُ وَالْوَقْفُ</مقطع>
  <مقطع هوية='٧٠٠٩٤' رقم="١١">وَإِنَّمَا ذَكَرْتُ لَكَ ثَمَاْنِيَةَ مَجَاْرٍ لِأَفْرُقَ</مقطع>
  <مقطع هوية='٠٨٧٥٨' رقم="١٢">بَيْنَ مَا يُدْخِلُهُ ضَرْبٌ مِنْ هٰذِهِ الْأَرْبَعَةِ</مقطع>
  <مقطع هوية='١٩٧٧٣' رقم="١٣">لِمَا يُحْدِثُ فِيْهِ الْعَاْمِلُ</مقطع>
  <مقطع هوية='٧٢٤٣١' رقم="١٤">وَلَيْسَ شَيْءٌ مِنْهَا إِلَّا وَهُوَ يَزُوْلُ عَنْهُ</مقطع>
  <مقطع هوية='٠٥٤٢٠' رقم="١٥">وَبَيْنَ ما يُبْنَى عَلَيْهِ الْحَرْفُ بِنَاْءً لا يَزُوْلُ عَنْهُ</مقطع>
  <مقطع هوية='١٣٨٥٩' رقم="١٦">لِغَيْرِ شَيْءٍ أَحْدَثَ ذٰلِكَ فِيْهِ مِنَ الْعَوَاْمِلِ</مقطع>
  <مقطع هوية='٦٢٨٤٧' رقم="١٧">الَّتِي لِكُلِّ عَاْمِلٍ مِنْهَا ضَرْبٌ مِنَ اللَّفْظِ فِي الْحَرْفِ</مقطع>
  <مقطع هوية='٠٩١٩٧' رقم="١٨">وَذٰلِكَ الْحَرْفُ حَرْفُ الْإِعْرَاْبِ</مقطع>
  <رأس هو="١">
    <عنوان>مَجَاْرِي حُرُوْفِ الْإِعْرَاْبِ</عنوان>
  </رأس>
  <مقطع هوية='١١٨٣٨' رقم="١٩">فالرَّفْعُ والْجَرُّ والنَّصْبُ والْجَزْمُ لِحُرُوْفِ الْإِعْراْبِ</مقطع>
  <مقطع هوية='٧٨١٥١' رقم="٢٠">وحُرُوْفُ الْإِعْرَاْبِ لِلْأَسْمَاْءِ الْمُتَمَكِّنَةِ</مقطع>
  <مقطع هوية='٤٢٩٧٢' رقم="٢١">ولِلْأَفْعَاْلِ الْمُضَاْرِعَةِ لِأَسْمَاْءِ الْفَاْعِلِيْنَ</مقطع>
  <مقطع هوية='٨٧٢٢٤' رقم="٢٢">الَّتِي فِي أَوَاْئِلِهَا الزَّوَاْئِدُ الْأَرْبَعُ</مقطع>
  <مقطع هوية='٤٥٤٢٣' رقم="٢٣">الْهَمْزَةُ والتَّاْءُ والْيَاْءُ والنُّوْنُ</مقطع>
  <مقطع هوية='٣٤٩٩٧' رقم="٢٤">وَذٰلِكَ قَوْلُكَ <قول هوية='٦٤٢١٤' رقم="١" مثال="١">أَفْعَلُ أَنَا</قول>
  </مقطع>
  <مقطع هوية='٧٦١٧٣' رقم="٢٥">و <قول هوية='٢٤١٥٨' رقم="٢">تَفْعَلُ أَنْتَ</قول> أَوْ <حرف>هِيَ</حرف>
  </مقطع>
  <مقطع هوية='٢٠١٣٥' رقم="٢٦">و <قول هوية='٧٢٤٢٩' رقم="٣">يَفْعَلُ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٣٠٠٦٧' رقم="٢٧">و <قول هوية='٦٤٧٥٦' رقم="٤">نَفْعَلُ نَحْنُ</قول>
  </مقطع>
  <مقطع هوية='٩٥٧٦٧' رقم="٢٨">وَالنَّصْبُ فِي الْأَسْمَاْءِ <قول هوية='٨٤٤٧٧' رقم="٥" مثال="١">رَأَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='١٧٨٢٤' رقم="٢٩">وَالْجَرُّ مِثْلُ <قول هوية='٤٨٧١٣' رقم="٦" مثال="١">مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٠٤٨٢٥' رقم="٣٠">وَالرَّفْعُ <قول هوية='٣٠٨٤٥' رقم="٧" مثال="١">هٰذَا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٦٢٦٥١' رقم="٣١">وَلَيْسَ فِي الْأَسْمَاْءِ جَزْمٌ لِتَمَكُّنِهَا ولِلِحَاْقِ التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٨٢١٥١' رقم="٣٢">فَإِذَا ذَهَبَ التَّنْوِيْنُ لَمْ يَجْمَعُوْا على الِاسْمِ ذَهَاْبَهُ وَذَهَاْبَ الْحَرَكَةِ</مقطع>
  <مقطع هوية='٩٦٢٩٤' رقم="٣٣">وَالنَّصْبُ فِي الْمُضَاْرِعِ مِنَ الْأَفْعَاْلِ <قول هوية='٤٧٤١١' رقم="٨" مثال="١">لَنْ يَفْعَلَ</قول>
  </مقطع>
  <مقطع هوية='٤٩٢٨٤' رقم="٣٤">وَالرَّفْعُ <قول هوية='٦١٨٢٤' رقم="٩" مثال="١">سَيَفْعَلُ</قول>
  </مقطع>
  <مقطع هوية='٣٨٣٨٩' رقم="٣٥">وَالْجَزْمُ <قول هوية='٥٤٠٥٥' رقم="١٠" مثال="١">لَمْ يَفْعَلْ</قول>
  </مقطع>
  <مقطع هوية='١٥٣٢٨' رقم="٣٦">وَلَيْسَ فِي الْأَفْعَاْلِ الْمُضَاْرِعَةِ جَرٌّ</مقطع>
  <مقطع هوية='٥٥٢٦٧' رقم="٣٧">كَمَا أَنَّهُ لَيْسَ فِي الْأَسْمَاْءِ جَزْمٌ</مقطع>
  <مقطع هوية='٨١٨٧٥' رقم="٣٨">لِأَنَّ الْمَجْرُوْرَ دَاْخِلٌ فِي الْمُضَاْفِ إِلَيْهِ مُعَاْقِبٌ لِلتَّنْوِيْنِ</مقطع>
  <مقطع هوية='٤٤٢٦٣' رقم="٣٩">ولَيْسَ ذٰلِكَ فِي هٰذِهِ الْأَفْعَاْلِ</مقطع>
  <مقطع هوية='٧٩٧٨٩' رقم="٤٠">وَإِنَّمَا ضَاْرَعَتْ أَسْمَاْءَ الْفاْعِلِيْنَ</مقطع>
  <مقطع هوية='٣٦٦١٠' رقم="٤١">أَنَّكَ تَقُوْلُ <قول هوية='٢٠٤٤٨' رقم="١١" مثال="١">إِنَّ عَبْدَ اللهِ لَيَفْعَلُ</قول>
  </مقطع>
  <مقطع هوية='٠٣٩٦٥' رقم="٤٢">فَيُوَاْفِقُ قَوْلَكَ <حرف>لَفَاْعِلٌ</حرف>
  </مقطع>
  <مقطع هوية='٩٨٣٦٩' رقم="٤٣">حَتَّى كَأَنَّكَ قُلْتَ <قول هوية='٤٠٠٦٨' رقم="١٢" مثال="١">إِنَّ زَيْدًا لَفَاْعِلٌ</قول>
  <!-- <نص سبب="١٨٠"> -->
  <!-- <متن> -->فِيمَا تُرِيدُ مِنَ الْمَعْنَى <!-- </متن> --> <!-- </نص> --></مقطع>
  <مقطع هوية='٢٨٨٥٤' رقم="٤٤">وتَلْحَقُهُ هٰذِهِ اللَّامُ كَمَا لَحِقَتْ الِاسْمَ</مقطع>
  <مقطع هوية='٦٨٣٧٥' رقم="٤٥">وَلَا تَلْحَقُ <حرف>فَعَلَ</حرف> اللَّاْمُ</مقطع>
  <مقطع هوية='٦٤٧٢٤' رقم="٤٦">وَتَقُوْلُ <قول هوية='٧٠٠٣٨' رقم="١٣" مثال="١">سَيَفْعَلُ ذٰلِكَ</قول> و<قول هوية='٨٢٩٠٢' رقم="١٤" مثال="١">سَوْفَ يَفْعَلُ ذٰلِكَ</قول>
  </مقطع>
  <مقطع هوية='٠٩٥١٦' رقم="٤٧">فَتُلْحِقُهَا هٰذَيْنِ الْحَرْفَيْنِ لِمَعْنًى</مقطع>
  <مقطع هوية='٨٥٩١٤' رقم="٤٨">كَمَا تَلْحَقُ الْأَلِفُ وَاللَّاْمُ الْأسَماْءَ لِلْمَعْرِفَةِ</مقطع>
  <مقطع هوية='٢٥٣٢٧' رقم="٤٩">وَيُبَيِّنُ لَكَ أَنَّهَا لَيْسَتْ بِأَسْمَاْءَ</مقطع>
  <مقطع هوية='١٦٧٦٣' رقم="٥٠">أَنَّكَ لَوْ وَضَعْتَهَا مَوَاْضِعَ الْأَسْمَاْءِ لَمْ يَجُزْ ذٰلِكَ</مقطع>
  <مقطع هوية='٩٥٩٦٤' رقم="٥١">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول هوية='٠٩١٨٤' رقم="١٥" ج="*">إِنَّ يَضْرِبَ يَأْتِيْنَا</قول>
  </مقطع>
  <مقطع هوية='٧٢٧٤٨' رقم="٥٢">وَأَشْبَاْهَ هٰذَا لَمْ يَكُنْ كَلَاْمًا</مقطع>
  <مقطع هوية='٠١٣٢٤' رقم="٥٣">إِلَّا أَنَّهَا ضَاْرَعَتْ الْفَاْعِلَ</مقطع>
  <مقطع هوية='٨٨٧٤٣' رقم="٥٤">لِاجْتِمَاْعِهِمَا فِي المَعْنَى</مقطع>
  <مقطع هوية='١٢٢٥٥' رقم="٥٥">وسَتَرَى ذٰلِكَ أَيْضًا فِي مَوْضِعِهِ</مقطع>
  <مقطع هوية='٧٦٧٥٣' رقم="٥٦">ولِدُخُوْلِ اللَّاْمِ</مقطع>
  <مقطع هوية='٥٦١٢٨' رقم="٥٧">قَالَ اللّٰهُ جَلَّ ثَنَاْؤُهُ <!-- <مقطع هوية='٦٦٥٦٥' رقم="٨٦"> -->
  <آية هوية='٦٥٥١١' سورة="١٦" آية="١٢٤">وَإِنَّ رَبَّكَ لَيَحْكُمُ بَيْنَهُمْ</آية>
  </مقطع>
  <مقطع هوية='٣٩٦٥٨' رقم="٥٨">أَيْ لَحَاْكِمٌ</مقطع>
  <مقطع هوية='٦٧٠١٣' رقم="٥٩">ولِمَا لَحِقَها مِنَ <حرف>السِّيْنِ</حرف> و<حرف>سَوْفَ</حرف>
  </مقطع>
  <مقطع هوية='٥٥٤٠٧' رقم="٦٠">كَمَا لَحِقَتْ الِاسْمَ الْأَلِفُ وَاللَّاْمُ لِلْمَعْرِفَةِ</مقطع>
  <رأس هو="٢">
    <عنوان>مَجَاْرِي المَبْنِيَّاْت</عنوان>
  </رأس>
  <مقطع هوية='٨٤٨١٨' رقم="٦١">وأمَّا الفَتْحُ والكَسْرُ والضَّمُّ والوَقْفُ</مقطع>
  <مقطع هوية='٩٠٦٢٠' رقم="٦٢">فَلِلْأَسْمَاْءِ غَيْرِ الْمُتَمَكِّنَةِ</مقطع>
  <مقطع هوية='٦٠٣٤٧' رقم="٦٣">الْمُضَاْرِعَةِ عِنْدَهُمْ مَا لَيْسَ بِاسْمٍ وَلَا فِعْلٍ مِمَّا جَاْءَ لِمَعْنًى لَيْسَ غَيْرُ</مقطع>
  <مقطع هوية='٢٤٠١٩' رقم="٦٤">نَحْوُ <حرف>سَوْفَ</حرف> و<حرف>قَدْ</حرف>
  </مقطع>
  <مقطع هوية='١٠١٢٦' رقم="٦٥">وَلِلْأَفْعَاْلِ الَّتِي لَمْ تَجْرِ مَجْرَى الْمَضَاْرِعَةِ</مقطع>
  <مقطع هوية='٠٣٥٩٣' رقم="٦٦">ولِلْحُرُوْفِ الَّتِي لَيْسَتْ بِأَسْماْءَ وَلَا أَفْعَاْلٍ وَلَمْ تَجِئْ إِلَّا لِمَعْنًى</مقطع>
  <مقطع هوية='٧٤٧٠٥' رقم="٦٧">فَالْفَتْحُ فِي الْأَسْمَاْءِ قَوْلُهُمْ <حرف>حَيْثَ</حرف> و<حرف>أَيْنَ</حرف> و<حرف>كَيْفَ</حرف>
  </مقطع>
  <مقطع هوية='٨١١٦٨' رقم="٦٨">والكَسْرُ فِيْهَا نَحْوُ <حرف>أُوْلَاْءِ</حرف> و<حرف>حَذَاْرِ</حرف> و<حرف>بَدَاْدِ</حرف>
  </مقطع>
  <مقطع هوية='٢٥٧٧٢' رقم="٦٩">وَالضَّمُّ نَحْوُ <حرف>حَيْثُ</حرف> و<حرف>قَبْلُ</حرف> و<حرف>بَعْدُ</حرف>
  </مقطع>
  <مقطع هوية='٨٣٧١٤' رقم="٧٠">وَالْوَقْفُ نَحْوُ <حرف>مَنْ</حرف> و<حرف>كَمْ</حرف> و<حرف>قَطْ</حرف> و<حرف>إِذْ</حرف>
  </مقطع>
  <مقطع هوية='٢٠٣٦٧' رقم="٧١">وَالْفَتْحُ فِي الْأَفْعَاْلِ الَّتِي لَمْ تَجْرِ مُجْرَى الْمُضَاْرِعَةِ</مقطع>
  <مقطع هوية='٧٦١٥٩' رقم="٧٢">قَوْلُهُمْ <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع هوية='٩٩١٥٠' رقم="٧٣">وَكَذٰلِكَ كُلُّ بِنَاْءٍ مِنَ الْفِعْلِ كَاْنَ مَعْنَاْهُ <حرف>فَعَلَ</حرف>
  </مقطع>
  <مقطع هوية='٦٦٥٩٣' رقم="٧٤">ولَمْ يُسَكِّنُوا آخِرَ <حرف>فَعَلَ</حرف>
  </مقطع>
  <مقطع هوية='٢٨٥٦٥' رقم="٧٥">لِأَنَّ فِيْهَا بَعْضُ مَا فِي الْمُضَاْرِعَةِ</مقطع>
  <مقطع هوية='٠٩٧٠٣' رقم="٧٦">تَقُوْلُ <قول هوية='٠٩٥٩٥' رقم="١٦" مثال="١">هٰذَا رَجُلٌ ضَرَبَنَا</قول> فَتَصِفُ بِهَا النَّكِرَةَ</مقطع>
  <مقطع هوية='٧٠٦٤٦' رقم="٧٧">وتَكُوْنُ فِي مَوْضِعِ <حرف>ضَاْرِبٌ</حرف>
  </مقطع>
  <مقطع هوية='١٦٥٢٤' رقم="٧٨">إِذَا قُلْتَ <قول هوية='٠٧٥٤٩' رقم="١٧" مثال="١">هٰذَا رَجُلٌ ضَاْرِبٌ</قول>
