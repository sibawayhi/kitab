  <مقطع هوية='٥٨٦٧٤' رقم="٢٧٢">كَاْنَ ضَعِيْفًا</مقطع>
  <مقطع هوية='٣٤٥٠٠' رقم="٢٧٣">وَلَمْ يَكُنْ فِي حُسْنِ</مقطع>
  <مقطع هوية='٦٩١١١' رقم="٢٧٤">
    <قول هوية='٤٧٥٠٤' رقم="٤٥" مثال="١">أَتَاْنِي رَجُلٌ قَوِيٌّ</قول>
