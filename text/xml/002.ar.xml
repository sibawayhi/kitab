  <مقطع هوية='٤٥٢٥١' رقم="٢٤٦">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <رأس صنف="١" هو="٥">
    <عنوان>الثِّقْلُ والخِفَّةُ فِي الكَلَاْمِ</عنوان>
  </رأس>
  <مقطع هوية='٢٥١٦٤' رقم="٢٤٧">وَاعْلَمْ أَنَّ بَعْضَ الْكَلَاْمِ أَثْقَلُ مِنْ بَعْضٍ</مقطع>
  <مقطع هوية='٢١٩١٧' رقم="٢٤٨">فَالْأَفْعَاْلُ أَثْقَلُ مِنَ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٢٣٤٧٥' رقم="٢٤٩">لِأَنَّ الْأَسْمَاْءَ هِيَ الْأُوْلَى وَهِيَ أَشَدُّ تَمَكُّنًا</مقطع>
  <مقطع هوية='٤٩٧٣٩' رقم="٢٥٠">فَمِنْ ثَمَّ لَمْ يَلْحَقْهَا تَنْوِيْنٌ</مقطع>
  <مقطع هوية='٣٦٥٨١' رقم="٢٥١">وَلَحِقَهَا الْجَزْمُ وَالسُّكُوْنُ</مقطع>
  <مقطع هوية='٥٦٩٧٤' رقم="٢٥٢">وَإِنَّمَا هِيَ مِنَ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٢٦٦٢٦' رقم="٢٥٣">أَلَا تَرَى أَنَّ الْفِعْلَ</مقطع>
  <مقطع هوية='٧٣٠١٠' رقم="٢٥٤">لَا بُدَّ لَهُ مِنَ الِاسْمِ</مقطع>
  <مقطع هوية='٥٢٩٠٧' رقم="٢٥٥">وَإِلَّا لَمْ يَكُنْ كَلَاْمًا</مقطع>
  <مقطع هوية='٨٣٦٧٥' رقم="٢٥٦">وَالِاسْمُ قَدْ يَسْتَغْنِي عَنِ الْفِعْلِ</مقطع>
  <مقطع هوية='٠٢١٧١' رقم="٢٥٧">تَقُوْلُ <قول هوية='٥٨٩٠٣' رقم="٤٠" مثال="١">اللّٰهُ إِلٰهُنَا</قول>
  </مقطع>
  <مقطع هوية='٥٣٥٧١' رقم="٢٥٨">وَ<قول هوية='٧٠٢٠٧' رقم="٤١" مثال="١">عَبْدُ اللّٰهِ أَخُوْنَا</قول>
  </مقطع>
  <رأس هو="٦">
    <عنوان>الْأَسْمَاْءُ الَّتِي تُضَاْرِعُ الْأُفْعَاْلَ الْمَضَاْرِعَةَ</عنوان>
  </رأس>
  <مقطع هوية='٧٩٦٩٨' رقم="٢٥٩">وَاعْلَمْ أَنَّ</مقطع>
  <مقطع هوية='١٩٤٩٣' رقم="٢٦٠">مَا ضَاْرَعَ الْفِعْلَ الْمُضَاْرِعَ مِنَ الْأَسْمَاْءِ فِي الْكَلَاْمِ وَوَاْفَقَهُ فِي الْبِنَاْءِ</مقطع>
  <مقطع هوية='١٠٥١٣' رقم="٢٦١">أُجْرِيَ لَفْظُهُ مُجْرَى مَا يَسْتَثْقِلُوْنَ</مقطع>
  <مقطع هوية='١٦٩٣٢' رقم="٢٦٢">وَمَنَعُوهُ مَا يَكُوْنُ لِمَا يَسْتَخِفُّوْنَ</مقطع>
  <مقطع هوية='١٠٨٧٢' رقم="٢٦٣">وَذٰلِكَ نَحْوُ <حرف>أَبْيَضَ</حرف> وَ<حرف>أَسْوَدَ</حرف> وَ<حرف>أَحْمَرَ</حرف> وَ<حرف>أَصْفَرَ</حرف>
  </مقطع>
  <مقطع هوية='٥٨٤٥٥' رقم="٢٦٤">فَهٰذَا بِنَاْءُ <حرف>أَذْهَبُ</حرف> وَ<حرف>أَعْلَمُ</حرف>
  </مقطع>
  <مقطع هوية='١٦٤١٧' رقم="٢٦٥">فَيَكُوْنُ فِي مَوْضِعِ الْجَرِّ مَفْتُوْحًا</مقطع>
  <مقطع هوية='٦٨٣٥٤' رقم="٢٦٦">ِاسْتَثْقَلُوْهُ حِيْنَ قَاْرَبَ فِي الْكَلَاْمِ وَوَاْفَقَ فِي الْبِنَاْءِ</مقطع>
  <مقطع هوية='٤١١٦١' رقم="٢٦٧">وَأَمَّا مُضَاْرِعُهُ فِي الصِّفَةِ</مقطع>
  <مقطع هوية='٥٨٣٥٧' رقم="٢٦٨">فَإِنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع هوية='١٢٤٦٥' رقم="٢٦٩">
    <قول هوية='٧٥٣٢٨' رقم="٤٢" ج="؟">أَتَاْنِي الْيَوْمَ قَوِيٌّ</قول>
  </مقطع>
  <مقطع هوية='٣٥١٥٤' رقم="٢٧٠">وَ<قول هوية='٠٩٩٦٩' رقم="٤٣" ج="؟">أَلَا بَاْرِدًا</قول>
  </مقطع>
  <مقطع هوية='٩١٢٢٣' رقم="٢٧١">وَ<قول هوية='٢٣٤٦٩' رقم="٤٤" ج="؟">مَرَرْتُ بِجَمِيلٍ</قول>
