  <عنوان>
    <مقطع هوية='١٤٢١٩'>هٰذَا بَاْبُ مَا جَاْءَ <حرف>فُعِلَ</حرف> مِنْهُ
    عَلَى غَيْرِ <حرف>فَعَلْتُهُ</حرف></مقطع>
  </عنوان>
  <مقطع هوية='٧١٧٤٢'>وَذٰلِكَ نَحْوُ <حرف>جُنَّ</حرف> وَ<حرف>سُلَّ</حرف>
  وَ<حرف>زُكِمَ</حرف> وَ<حرف>وُرِدَ</حرف></مقطع>
  <مقطع هوية='٥٥٠٣٩'>وَعَلَى ذَا قَاْلُوْا <حرف>مَجْنُوْنٌ</حرف> وَ<حرف>مَسْلُوْلٌ</حرف>
  وَ<حرف>مَزْكُوْمٌ</حرف> وَ<حرف>مَحْمُوْمٌ</حرف> وَ<حرف>مَوْرُوْدٌ</حرف></مقطع>

  <مقطع هوية='٨٢٦٧١'>وإِنَّمَا جَاْءَتْ هٰذِهِ الْحُرُوْفُ عَلَى <حرف>جَنَنْتُهُ</حرف>
  وَ<حرف>سَلَلْتُهُ</حرف></مقطع>
  <مقطع هوية='٣٢٣٤٤'>وَإِنْ لَمْ يُسْتَعْمَلْ فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٢٣٧٩٣'>كَمَا أَنَّ <حرف>يَدَعَ</حرف> عَلَى <حرف>وَدَعْتُ</حرف></مقطع>
  <مقطع هوية='٣٧٢٠١'>وَ<حرف>يَذَرُ</حرف> عَلَى <حرف>وَذَرْتُ</حرف></مقطع>
  <مقطع هوية='٥٨٣٧٤'>وَإِنْ لَمْ يُسْتَعْمَلَا</مقطع>
  <مقطع هوية='٩٥٤٨٦'>اسْتُغْنِيَ عَنْهُمَا بِـ<حرف>تَرَكْتُ</حرف></مقطع>
  <مقطع هوية='٧٧٧٣٩'>وَاسْتُغْنِيَ عَنْ <حرف>قَطِعَ</حرف> بِـ<حرف>قُطِعَ</حرف></مقطع>
  <مقطع هوية='٧١٦٤٧'>وَكَذٰلِكَ اسْتُغْنِيَ عَنْ <حرف>جَنَنْتُ</حرف> وَنَحْوِهَا بِـ<حرف>أَفْعَلْتُ</حرف></مقطع>
  <مقطع هوية='٠٨٢٩٧'>فَإِذَا قَاْلُوْا <حرف>جُنَّ</حرف> وَ<حرف>سُلَّ</حرف></مقطع>
  <مقطع هوية='٥٣٤٧٢'>فَإِنَّمَا يَقُوْلُوْنَ <قول هوية='٩٣٠٢٢'>جُعِلَ فِيْهِ الْجُنُوْنُ وَالسِّلُّ</قول></مقطع>
  <مقطع هوية='١٢٦٨٤'>كَمَا قَاْلُوْا <حرف>حُزِنَ</حرف> وَ<حرف>فُسِلَ</حرف> وَ<حرف>رُذِلَ</حرف></مقطع>
  <مقطع هوية='٢٥٠٢٢'>وَإِذَا قَاْلُوْا <حرف>جُنُنْتَ</حرف>
  فَكَأَنَّهُمْ قَاْلُوْا <قول هوية='٥٥٠٩٣'>جُعِلَ فِيْكَ جُنُوْنٌ</قول></مقطع>
  <مقطع هوية='٥٩٧٨٢'>كَمَا أَنَّهُ إِذَا قَاْلَ <قول هوية='٥٨٢٨٣'>أَقْبَرْتُهُ</قول>
  فَإِنَّمَا يَقُوْلُ <قول هوية='٣٠٨٥١'>وَهَبْتُ لَهُ قَبْرًا</قول>
  وَ<قول هوية='٢٨١٦١'>جَعَلْتُ لَهُ قَبْرًا</قول></مقطع>
  <مقطع هوية='٩٢٩٩٣'>وكَذٰلِكَ <حرف>أَحْزَنْتُهُ</حرف> وَ<حرف>أَحْبَبْتُهُ</حرف></مقطع>
  <مقطع هوية='١٨٠٢١'>فَإِذَا قُلْتَ <حرف>مَحْزُوْنٌ</حرف> وَ<حرف>مَحْبُوْبٌ</حرف>
  جَاْءَ عَلَى غَيْرِ <حرف>أَحْبَبْتُ</حرف></مقطع>
  <مقطع هوية='٧٩٨١٨'>وَقَدْ قَاْلَ بَعْضُهُمْ <حرف>حَبَبْتُ</حرف> فَجَاْءَ بِهِ عَلَى الْقِيَاْسِ</مقطع>

