     بلاق="١-٣٥٩"
     درنبورج="١-٣١٤"
     البكاء="٣-٢٢٥"
     هارون="٢-٣٠٩"
     يعقوب="٢-٣٢٢"
     رقم="١٨٥">

  <عنوان>
    <مقطع>هُذَا بَابُ الِاسْتِثْنَاءِ</مقطع>
  </عنوان>
    <مقطع>فَحَرْفُ الِاسْتِثْنَاءِ <حرف>إِلَّا</حرف></مقطع>
  <مقطع>وَمَا جَاءَ مِنَ الْأَسْمَاءِ فِيهِ مَعْنَى <حرف>إلَّا</حرف> فَـ<حرف>غَيْرٌ</حرف> وَ<حرف>سِوًى</حرف></مقطع>
  <مقطع>وَمَا جَاءَ مِنَ الْأَفْعَالِ فِيهِ مَعْنَى <حرف>إلَّا</حرف> فَـ<حرف>لَا يَكُونُ</حرف> وَ<حرف>لَيْسَ</حرف> وَ<حرف>عَدَا</حرف> وَ<حرف>خَلَا</حرف></مقطع>
  <مقطع>ومَا فِيهِ ذَلِكَ الْمَعْنَى مِنْ حُرُوفِ الْإِضَافَةِ وَلَيْسَ بِاسْمٍ فَـ<حرف>حَاشَى</حرف> وَ<حرف>خَلَا</حرف> فِي بَعْضِ اللَّغَاتِ</مقطع>
  <مقطع>وَسَأُبَيِّنُ لَكَ أَحْوَالَ هَذِهِ الْحُرُوفِ إِنْ شَاءَ اللَّهُ عَزَّ وَجَلَّ الأَوَّلَ فَالأَولَ</مقطع>

  <التحرير>
    <تشكيل  نسخة="1" نسبة="100"/>
    <تقطيع  نسخة="1"/>
    <أقوال  نسخة="1" نسبة="100"/>
  </التحرير>

</باب>
