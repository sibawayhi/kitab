<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٢٩"
     درنبورج="١-١٩٥"
     البكاء="٢-٨٩"
     هارون="٢-٢٤"
     يعقوب="٢-٢٣"
     رقم="١٠٩">
  <عنوان>
    <مقطع هوية='١٧٢٥٠'>هٰذَا بَاْبُ مَا جَرَى مِنَ الْأَسْمَاْءِ الَّتِي تَكُوْنُ صِفَةً مَجْرَى الْأَسْمَاْءِ الَّتِي لَا تَكُوْنُ صِفَةً</مقطع>
  </عنوان>
  <مقطع هوية='٥٨٠١٣'>وَذٰلِكَ <حرف>أَفْعَلُ مِنْهُ</حرف> وَ<حرف>مِثْلُكَ</حرف> وَأَخَوَاْتُهُمَا</مقطع>
  <مقطع هوية='٣٨٣٨٦'>وَ <حرف>حَسْبُكَ مِنْ رَجُل</حرف> وَ<حرف>سوْاْءٌ عَلَيْهِ الْخَيْرُ وَالشَّرُّ</حرف> وَ<حرف>أَيُّمَا رَجُلٍ</حرف> وَ<حرف>أَبُو عَشَرَةٍ</حرف> وَ<حرف>أَبٌ لَكَ</حرف> وَ<حرف>أَخٌ لَكَ</حرف> وَ<حرف>صَاْحِبٌ لَكَ</حرف> وَ<حرف>كُلُّ رَجُلٍ</حرف> وَ<حرف>أَفْعَلُ شَيْءٍ</حرف> نَحْوُ <حرف>خَيْرُ شَيْءٍ</حرف> وَ<حرف>أَفْضَلُ شَيْءٍ</حرف> وَ<حرف>أَفْعَلُ مَا يَكُوْنُ</حرف> وَ<حرف>أَفْعَلُ مِنْكَ</حرف>
  </مقطع>
  <مقطع هوية='٥٠٤٢٤'>وَإِنَّمَا صَاْرَ هٰذَا بِمَنْزِلَةِ الْأَسْمَاْءِ الَّتِي لَا تَكُوْنُ صِفَةً</مقطع>
  <مقطع هوية='١٤٤٨٧'>مِنْ قِبَلِ أَنَّهَا لَيْسَتْ بِفَاْعِلَةٍ</مقطع>
  <مقطع هوية='١٧٤٩١'>وَأَنَّهَا لَيْسَتْ كَاْلصِّفَاْتِ غَيْرِ الْفَاْعِلَةِ</مقطع>
  <مقطع هوية='٥٥٥٣٥'>نَحْوُ <حرف>حَسَنٍ</حرف> وَ<حرف>طوْيْلٍ</حرف> وَ<حرف>كَرِيْم</حرف>
  </مقطع>
  <مقطع هوية='٨٠٧٣٢'>مِنْ قِبَلِ أَنْ هٰذِهِ تُفْرَدُ وَتُؤَنَّثُ بِاْلْهَاْءِ</مقطع>
  <مقطع هوية='٣١٧٦٧'>كَمَا يِؤَنَّثُ <حرف>فَاْعِلٌ</حرف> وَيَدْخُلُهَا الْأَلِفُ وَاللَّاْمُ وَتُضَاْفُ أِلَى مَا فِيْهِ الْأَلِفُ وَاللَّاْمُ</مقطع>
  <مقطع هوية='٤٧٣٦٣'>وَتَكُوْنُ نَكِرَةً بِمَنْزِلَةِ الِٱسْمِ الَّذِي يَكُوْنُ فَاْعِلًا</مقطع>
  <مقطع هوية='٩٣١٧٢'>حِيْنَ تَقُوْلُ <قول هوية='٧٨٠١٩'>هٰذَا رَجُلٌ مُلَاْزِمُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع هوية='٥٧٠٣٨'>وَذٰلِكَ [ قَوْلُكَ ] <قول هوية='٩٦٩٠٣'>هٰذَا حَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع هوية='٠١٣٩١'>وَمَعَ ذٰلِكَ أَنَّكَ تُدْخِلُ عَلَى <حرف>حَسَنِ الْوَجْهِ</حرف> الْأَلِفَ وَاللَّاْمَ</مقطع>
  <مقطع هوية='٣٣٦٠٥'>فَتَقُوْلُ <حرف>الْحَسَنُ الْوَجْهِ</حرف> كَمَا تَقُوْلُ <حرف>الْمُلَاْزِمُ الرَّجُلِ</حرف>
  </مقطع>
  <مقطع هوية='٠٢٣٨١'>فَـ<حرف>حَسَنٌ</حرف> وَمَا أَشْبَهَهُ يَتَصَرَّفُ هٰذَا التَّصَرُّفَ</مقطع>
  <مقطع هوية='٢٤٠٥٠'>وَلَا تَسْتَطِيْع أَنْ تُفْرِدَ شَيْئًا مِنْ هٰذِهِ الْأَسْمَاْءِ الْأُخَرِ لَوْ قُلْتَ <قول هوية='٧٩٤٥٢'>هٰذَا رَجُلٌ خَيْرٌ</قول>
  </مقطع>
  <مقطع هوية='٣٥٢٤٦'>وَ<قول هوية='٣١٧٦٤'>هٰذَا رَجُلٌ أفَضْلُ</قول>
  </مقطع>
  <مقطع هوية='٢٩٠٢٧'>وَ<قول هوية='٠٣٥٤٠'>هٰذَا رَجُلٌ أَبٌ</قول>
  </مقطع>
  <مقطع هوية='١٣٦٨٦'>لَمْ يَسْتَقِمْ وَلَمْ يَكُنْ حَسَنًا</مقطع>
  <مقطع هوية='٢٠٨٨٠'>وَكَذٰلِكَ أَيٌّ</مقطع>
  <مقطع هوية='٩١٣٣٦'>لَا تَقُوْلُ <قول هوية='٥٥٥٤٠'>هٰذَا رَجُلٌ أَيٌّ</قول>
  </مقطع>
  <مقطع هوية='٨١٥٣٨'>فَلَمَّا أَضَفْتَهُنَّ وَأَوْصَلْتَ إِلَيْهِنَّ شَيْئًا حَسُنَّ وَتَمَمْنَ بِهِ</مقطع>
  <مقطع هوية='٧٢٤٣٨'>فَصَاْرَتْ الْإِضَاْفَةُ وَهٰذِهِ اللَّوَاْحِقُ تُحَسِّنُهُ</مقطع>
  <مقطع هوية='٦٦٢٩٧'>وَلَا تَسْتَطِيْعُ أَنْ تُدْخِلَ الْأَلِفَ وَاللَّاْمَ عَلَى شَيْءٍ مِنْهُا</مقطع>
  <مقطع هوية='٤٥٧٧٠'>كَمَا أَدْخَلْتَ ذٰلِكَ عَلَى <حرف>الْحَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع هوية='٠٢٥٢٣'>[ وَلَا تُنَوِّنُ مَا تُنَوِّنُ مِنْهُ عَلَى حَدِّ تَنْوِيْنِ الْفَاْعِلِ فَتَكُوْنُ بِاْلْخِيَاْرِ فِي حَذْفِهِ وَتَرْكِهِ</مقطع>
  <مقطع هوية='٠١٤٠٤'>وَلَا تُؤَنِّثُ كَمَا تُؤَنِّثُ الْفَاْعِلَ فَلَمْ يَقْوَ قُوَّةَ الْـ<حرف>حَسَنِ</حرف> إِذَا لَمْ يُفْرَدْ إِفْرَاْدَهُ</مقطع>
  <مقطع هوية='١٣٨٨٠'>فَلَمَّا جَاْءَتْ مُضَاْرِعَةً لِلِٱسْمِ الَّذِي لَا يَكُوْنُ صِفَةً الْبَتَّةَ إِلَّا مُسْتَكْرَهَا</مقطع>
  <مقطع هوية='٦٨٧٥٠'>كَاْنَ الْوَجْهُ عِنْدَهُم فِيْهِ الرَّفْعَ إِذَا كَاْنَ النَّعْتُ للآخرِ</مقطع>
  <مقطع هوية='١٢٣١٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤١٢٤٨'>مَرَرْتُ بِرَجُلٍ حَسَنٌ أَبُوْهُ</قول>
  </مقطع>
  <مقطع هوية='٣٤٤٣٩'>وَمَعَ ذٰلِكَ أَيْضًا أَنَّ الِاْبْتِدَاْءَ يَحْسُنُ فِيْهِنَّ</مقطع>
  <مقطع هوية='١٧٦٧٥'>تَقُوْلُ <قول هوية='٩٥٧٦٩'>خَيْرٌ مِنْكَ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٨١٩٢٠'>وَ<قول هوية='٣٣٠٨٥'>أَبُو عَشَرَةٍ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٢٧٨٦٨'>وَ<قول هوية='٤٧٩٦٦'>سَوَاْءٌ عَلَيْهِ الْخَيْرُ وَالشَّرُّ</قول>
  </مقطع>
  <مقطع هوية='٦٦٥٦١'>وَلَا يَحْسُنُ الِاْبْتِدَاْءُ فِي قَوْلِكَ <قول هوية='٦٥١٠٨'>حَسَنٌ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='١٧٥٥٢'>فَلَمَّا جَاْءَتْ مُضَاْرِعَةً لِلْأَسْمَاْءِ الَّتِي لَا تَكُوْنُ صِفَةً وَقَوِيَتْ فِي الِاْبْتِدَاْءِ كَاْنَ الْوَجْهُ فِيْهَا عِنْدَهُم الرَّفْعَ إِذَا كَاْنَ النَّعْتُ للآخرِ</مقطع>
  <مقطع هوية='٣٧٤٣٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='٣٥١٣٠'>مَرَرْتُ بِرَجُلٍ خَيْرٌ مِنْهُ أَبُوْهُ</قول>
  </مقطع>
  <مقطع هوية='٦١٤٨٧'>وَ<قول هوية='٠٨٨٨٩'>مَرَرْتُ بِرَجُلٍ سَوَاْءٌ عَلَيْهِ الْخَيْرُ وَالشَّرُّ</قول>
  </مقطع>
  <مقطع هوية='٧١٣٦٨'>وَ<قول هوية='٤٣١٨٠'>مَرَرْتُ بِرَجُلٍ أَبٌ لَكَ صَاْحِبُهُ</قول>
  </مقطع>
  <مقطع هوية='٤٧٢٥٧'>وَ<قول هوية='٦٤٦١٢'>مَرَرْتُ بِرَجُلٍ حَسْبُكَ مِنْ رَجُلٍ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٩١٩٧٩'>وَ<قول هوية='٢٦١٣٥'>مَرَرْتُ بِرَجُلٍ أَيُّمَا رَجُلٍ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٧٥٠٧٨'>وَإِنْ قُلْتَ <قول هوية='٢٤٦٥٢'>مَرَرْتُ بِرَجُلٍ حَسْبُكَ بِهِ مِنْ رَجُل</قول> رَفَعْتَ [ أَيْضًا ]</مقطع>
  <مقطع هوية='٩٩٩٣٢'>وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللهُ أَنَّ <حرف>بِهِ</حرف> هٰهُنَا بِمَنْزِلَةِ <حرف>هُوَ</حرف>
  </مقطع>
  <مقطع هوية='٨٧٨٩١'>وَلٰكِنَّ هٰذِهِ الْبَاْءَ دَخَلَتْ هٰهُنَا تَوْكِيْدًا كَمَا قَاْلَ</مقطع>
  <شاهدة هوية='٧١٤٢٣'>
    <بيت>
      <مصراع>كَفَى الشَّيْبُ وَالإِسْلَاْمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٣٥٦٧'>وَكَفَى بِاْلشَّيْبِ وَالْإِسْلَاْمِ</مقطع>
  <مقطع هوية='٤٧٦٢١'>فَإِنْ قُلْتَ <قول هوية='٩٣٨٣٥'>مَرَرْتُ بِرَجُلٍ شَدِيْدٍ عَلَيْهِ الْحَرُّ وَالْبَرْدُ</قول> جَرَرْتُ</مقطع>
  <مقطع هوية='٣٣٥٩٤'>مِنْ قِبَلِ أَنَّ <حرف>شَدِيْدًا</حرف> قَدْ يَكُوْنُ صِفَةً وَحْدَهُ</مقطع>
  <مقطع هوية='٧٤٢٠٥'>مُسْتَغْنِيًا عَنْ <حرف>عَلَيْهِ</حرف> وَعَنْ ذِكْرِ الْحَرِّ وَالْبَرْدِ</مقطع>
  <مقطع هوية='١٧٠٦٩'>وَيَدْخُلُ فِي جَمِيْعِ مَا دَخَلَ الْـ<حرف>حَسَنُ</حرف>
  </مقطع>
  <مقطع هوية='٦١٦٥٤'>وَإِنْ قُلْتَ <قول هوية='٧٠٣٠٢'>مَرَرْتُ بِرَجُلٍ سَوَاْءٍ فِي الْخَيْرِ وَالشَّرِّ</قول> جَرَرْتَ</مقطع>
  <مقطع هوية='١٧٩١٤'>لِأَنَّ هٰذَا مِنْ صِفَةِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٧٧١٥٢'>فَصَاْرَ كَقَوْلِكَ <قول هوية='٩٨٠٦٤'>مَرَرْتُ بِرَجُلٍ خَيْرٍ مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٣٨١٢'>وَإِنْ قُلْتَ <قول هوية='٢٦٦٣٢'>مَرَرْتُ بِرَجُلٍ مُسْتَوٍ عَلَيْهِ الْخَيْرُ وَالشَّرُّ</قول> جَرَرْت [ أَيْضًا ]</مقطع>
  <مقطع هوية='٧٢٥٠٥'>لِأَنَّهُ صَاْرَ عَمَلًا بِمَنْزِلَةِ قَوْلِكَ <قول هوية='١١٩٣٧'>مَرَرْتُ بِرَجُلٍ مُفَضَّضٍ سَيْفُهُ</قول>
  </مقطع>
  <مقطع هوية='٩٠٠٩٢'>وَ<قول هوية='٢٧٧٧٢'>مَرَرْتُ بِرَجُلٍ مَسْمُوْمٍ شَرَاْبُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٤٩٢٠'>[ وَيَدْخَلُهُ جَمِيْعُ مَا يَدَخَل الْـ<حرف>حَسَنَ</حرف> ]</مقطع>
  <مقطع هوية='٦٠٣٤٥'>فَإِذَا قُلْتَ <حرف>سَمٌّ</حرف> وَ<حرف>فِضَّةٌ</حرف> رَفَعْتَ</مقطع>
  <مقطع هوية='٤٢٥٦٣'>وَتَقُوْلُ <قول هوية='١٧٨٣٦'>مَرَرْتُ بِرَجُلٍ سَوَاْءٌ أَبُوْهُ وَأُمُّهُ</قول> [ إِذَا كُنْت تُرِيْدُ أَنَّهُ عَدل ]</مقطع>
  <مقطع هوية='٠٠٢٠٢'>وَتَقُوْلُ <قول هوية='٥٤٧٨٣'>مَرَرْتُ بِرَجُلٍ سَوَاْءٌ دِرْهَمُهُ</قول>
  </مقطع>
  <مقطع هوية='٢٥٦٠٧'>كَأَنَّكَ قُلْتَ <قول هوية='٧٣٨١٥'>مَرَرْتُ بِرَجُلٍ تَاْمٍّ دِرْهَمُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٢٢١٣'>وَزَعَمَ يُوْنُسُ أَنَّ نَاْسًا مِنَ الْعَرَبِ يُجْرُوْنَ [ هٰذَا ] كَمَا يُجْرُوْنَ <قول هوية='٦٠٨٨٠'>مَرَرْتُ بِرَجُلٍ خَزٍّ صُفًّتُهُ</قول>
  </مقطع>
  <مقطع هوية='٨٧٩٣٤'>وَمِمَّا يُقَوِّيْكَ فِي رَفْعِ هٰذَا أَنَّكَ لَا تَقُوْلُ <قول هوية='٧٥١٨٩'>مَرَرْتُ بِخَيْرٍ مِنْهُ أَبُوْهُ</قول>
  </مقطع>
  <مقطع هوية='٦٢٤٣٠'>وَلَا <حرف>بِسَوَاْءٍ عَلَيْهِ الْخَيْرُ وَالشَّرُّ</حرف>
  </مقطع>
  <مقطع هوية='٤٩٦٩٧'>كَمَا تَقُوْلُ <حرف>بِحَسَنٍ أَبُوْهُ</حرف>
  </مقطع>
  <مقطع هوية='١٤٢٢٢'>وَتَقُوْلُ <قول هوية='١١٥٤٠'>مَرَرْتُ بِرَجُلٍ كُلُّ مَاْلِهِ دِرْهَمَاْنِ</قول>
  </مقطع>
  <مقطع هوية='١٣٥٥٦'>لَا يَكُوْنُ فِيْهِ إِلَّا الرَّفْعُ</مقطع>
  <مقطع هوية='٦٩٠٢١'>لِأَنَّ <حرف>كُلٍّ</حرف> مُبْتَدَأٌ وَالْـ<حرف>دِرْهَمَاْنِ</حرف> مَبْنِيَّاْنِ عَلَيْهِ</مقطع>
  <مقطع هوية='٦١١٢٠'>فَإِنْ أَرَدْتِ بِقَوْلِكَ <قول هوية='٧٢٢٢٥'>مَرَرْتُ بِرَجُلٍ أَبِي عَشَرَةٍ أَبُوْهُ</قول> جَاْزَ</مقطع>
  <مقطع هوية='٤٥٣٢٩'>لِأَنَّهُ قَدْ يُوْصَفُ بِهِ</مقطع>
  <مقطع هوية='٤٤٨١٤'>تَقُوْلُ <قول هوية='٧٤٥٩١'>هٰذَا مَاْلٌ كُلُّ مَاْلٍ</قول>
  </مقطع>
  <مقطع هوية='٥٧١٩٣'>وَلَيْسَ اسْتِعْمَاْلُهُ وَصْفًا بِقُوَّةِ <حرف>أَبِي عَشَرَةٍ</حرف> وَلَا كَثْرَتِهِ</مقطع>
  <مقطع هوية='٢١٥٥٨'>وَلَيْسَ بِأَبْعَدَ مِنْ <قول هوية='٨٥٤٠٤'>مَرَرْتُ بِرَجُلٍ خَزٍّ صُفَّتُهُ</قول>
  </مقطع>
  <مقطع هوية='٤٣٩٢٥'>[ وَلَا <حرف>قاْعٍ عَرْفَجٍ كُلُّهُ</حرف> ]</مقطع>
  <مقطع هوية='٢٧٣٤٤'>وَمِنْ جَوَاْزِ الرَّفْعِ فِي هٰذَا الْبَاْبِ أَنِّي سَمِعْتُ رَجُلَيْنِ مِنَ الْعَرَبِ عَرَبِيَيْنِيَقُوْلَاْنِ <قول هوية='٣٧٣٩٢'>كَاْنَ عَبْدُ اللَّهِ حَسْبُكَ بِهِ رَجُلًا</قول>
  </مقطع>
  <مقطع هوية='٤١٢١٥'>وَهٰذَا أَقْرَبُ أِلَى أَنْ يَكُوْنَ فِيْهِ الْإجْرَاْءُ عَلَى الْأَوَّلِ إِذَا كَاْنَ فِي الْخَزِّ وَالْفِضَّةِ</مقطع>
  <مقطع هوية='٩٢٣١١'>لِأَنَّ هٰذَا يُوْصَفُ بِهِ وَلَا يُوْصَفُ بِاْلْخَزِّ وَنَحْوِهِ</مقطع>

