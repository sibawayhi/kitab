    <عنوان>
       <مقطع هوية='٧٢٢٦٠'>هٰذَا بَاْبُ الْمُسْنَدِ وَالْمُسْنَدِ إِلَيْهِ</مقطع>
   </عنوان>
    <مقطع هوية='٧٧٣١٤'>وَهُمَا مَا لَا يَسْتَغْنِي وَاْحِدٌ مِنْهُمَا عَنِ الْآخَرِ</مقطع>
    <مقطع هوية='٨٤٧٤٦'>وَلَا يَجِدُ الْمُتَكَلِّمُ مِنْهُ بُدًّا</مقطع>
    <مقطع هوية='٧٠٨٣٠'>فَمِنْ ذٰلِكَ الِاسْمُ الْمُبْتَدَأُ وَالْمَبْنِىُّ عَلَيْهِ</مقطع>
    <مقطع هوية='٠٩٩٩٧'>وَهُوَ قَوْلُكَ <قول هوية='٥٨٢٤٥'>عَبْدُ اللهِ أَخُوْكَ</قول>   وَ<قول هوية='٣٩٨٠٩'>هٰذَا أَخُوْكَ</قول>
   </مقطع>
    <مقطع هوية='٨١٦٣٧'>وَمِثْلُ ذٰلِكَ <قول هوية='٧٨٥٨١'>يَذْهَبُ عَبْدُ اللهِ</قول>
   </مقطع>
    <مقطع هوية='٠١٩١٦'>فَلَا بُدَّ لِلْفِعْلِ مِنَ الِاسْمِ</مقطع>
    <مقطع هوية='٨٩٢٣٠'>كَمَا لَمْ يَكُنْ لِلِاسْمِ الْأَوَّلِ بُدٌّ مِنَ الْآخَرِ في الْاِبْتِدَاءِ</مقطع>
    <مقطع هوية='٤٩٨٤١'>وَمِمَّا يَكُوْنُ بِمَنْزِلَةِ الْاِبْتِدَاءِ قَوْلُكَ</مقطع>
    <مقطع هوية='٧٩٨٩٥'><قول هوية='١٣٩١٤'>كَاْنَ عَبْدُ اللهِ مُنْطَلِقًا</قول></مقطع>
    <مقطع هوية='٥٥٢٣٥'>وَ<قول هوية='٦١٢٢٢'>لَيْتَ زَيْدًا مُنْطَلِقٌ</قول></مقطع>
    <مقطع هوية='٠٨٥٠٧'>لِأَنَّ هٰذَا يَحْتَاْجُ إِلَى مَا بَعْدَهُ</مقطع>
    <مقطع هوية='٦٩٢١٧'>كَاحْتِيَاْجِ الْمُبْتَدَأِ إِلَى مَا بَعْدَهُ</مقطع>
    <مقطع هوية='٦٦٩٩٦'>وَاعْلَمْ أَنَّ الِاسْمَ أَوَّلُ أَحْوَاْلِهِ الْاِبْتِدَاْءُ</مقطع>
    <مقطع هوية='٠١٣٨٣'>وَإِنَّمَا يَدْخُلُ النَّاْصِبُ وَالرَّاْفِعُ سِوَى الِابْتِدَاْءِ وَالْجَاْرُّ عَلَى الْمُبْتَدَأِ</مقطع>
    <مقطع هوية='٦٥٥٣٦'>أَلَا تَرَى أَنَّ مَا كَاْنَ مُبْتَدَأً</مقطع>
    <مقطع هوية='٣٥٩٧٤'>قَدْ تَدْخُلُ عَلَيْهِ هٰذِهِ الْأَشْيَاْءُ</مقطع>
    <مقطع هوية='٠٨٦٢٠'>حَتَّى يَكُوْنَ غَيْرَ مُبْتَدَأٍ</مقطع>
    <مقطع هوية='٤٢٣٣٦'>وَلَا تَصِلُ إِلَى الِابْتِدَاْءِ</مقطع>
    <مقطع هوية='٧٩٦٤٨'>مَا دَاْمَ مَعَ مَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع هوية='٥٤٩٢٢'>إِلَّا أَنْ تَدَعَهُ</مقطع>
    <مقطع هوية='٣٠٩٦١'>وَذٰلِكَ أَنَّكَ إِذَا قُلْتَ <قول هوية='٤١٨٩٤'>عَبْدُ اللهِ مُنْطَلِقٌ</قول></مقطع>
    <مقطع هوية='٠٤٨٤٤'>إِنْ شِئْتَ أَدْخَلْتَ  <حرف>رَأَيْتُ</حرف> عَلَيْهِ</مقطع>
    <مقطع هوية='٣٣٤٦٣'>فَقُلْتَ <قول هوية='٥٤٥١٢'>رَأَيْتُ عَبْدَ اللهِ مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع هوية='٨٩٧١٤'>أَوْ قُلْتَ <قول هوية='٦٩٦٢٠'>كَاْنَ عَبْدُ اللهِ مُنْطَلِقًا</قول></مقطع>
    <مقطع هوية='٥٦٥٢٧'>أَوْ <قول هوية='٢٨٦٥٤'>مَرَرْتُ بِعَبْدِ اللهِ مُنْطَلِقًا</قول>
   </مقطع>
   <مقطع هوية='٦٦٩٨٣'>فَالْمُبْتَدَأُ أَوَّلُ</مقطع>
