<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤١"
     درنبورج="١-٣١"
     البكاء="١-١٤٧"
     هارون="١-٨٠"
     يعقوب="١-١٣٣"
     رقم="٢٤">
  <عنوان>
    <مقطع هوية='٥٥٠٧٣'>هٰذَا بَاْبُ مَا يَكُوْنُ فِيْهِ الاِسْمُ مَبْنِيًّا عَلَى الْفِعْلِ</مقطع>
    <مقطع هوية='٨٩٦٤٨'>قُدِّمَ أَوْ أُخِّرَ</مقطع>
    <مقطع هوية='٩٤٩٣٦'>وَمَا يَكُوْنُ فِيْهِ الْفِعْلُ مَبْنِيًّا عَلَى الْاِسْمِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٩١٨١'>فَإِذَا بَنَيْتَ الِاسْمَ عَلَيْهِ قُلْتَ <قول هوية='١٣٠٨٩'>ضَرَبْتُ زَيْدًا</قول></مقطع>
  <مقطع هوية='٤١٢٨٣'>وَهُوَ الْحَدُّ</مقطع>
  <مقطع هوية='٢٦٨٦١'>لِأَنَّكَ تُرِيْدُ أَنْ تُعْمِلَهُ</مقطع>
  <مقطع هوية='٣٧٠٤٩'>وَتَحْمِلَ عَلَيْهِ الِاسْمَ</مقطع>
  <مقطع هوية='٠٧٧٣٨'>كَمَا كَاْنَ الْحَدُّ <قول هوية='١٦٣٥٣'>ضَرَبَ زَيْدٌ عَمْرًا</قول></مقطع>
  <مقطع هوية='٩٥٠٢٩'>حَيْثُ كَاْنَ <حرف>زَيْدٌ</حرف> أَوَّلَ مَا تَشْغَلُ بِهِ الْفِعْلَ</مقطع>
  <مقطع هوية='٢٨٧٣٠'>وَكَذَلِكَ هَذَا إِذَا كَاْنَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية='٦٢٩٣٢'>وَإِنْ قَدَّمْتَ الاِسْمَ فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='٨٧٤٩٦'>كَمَا كَاْنَ ذَلِكَ عَرَبِيًّا جَيِّدًا</مقطع>
  <مقطع هوية='٦٠٣٣٥'>وَذَلِكَ قَوْلُكَ <قول هوية='٧٩٥٥١'>زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية='٩٤٧٧١'>وَالِاهْتِمَاْمُ وَالْعِنَاْيَةُ هُنَا فَِي التَّقْدِيْمِ وَالتَّأْخِيْرِ سَوَاْءٌ</مقطع>
  <مقطع هوية='٥٤١٠٨'>مِثْلُهُ فِي <قول هوية='٤٤٢٢٩'>ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٣٢٤١٥'>وَ<قول هوية='٩٧٧٧٦'>ضَرَبَ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٦١٧٣٩'>فَإِذَا بَنَيْتَ الْفِعْلَ عَلَى الِاسْمِ قُلْتَ <قول هوية='٤٣٤٦٨'>زَيْدٌ ضَرَبْتُهُ</قول></مقطع>
  <مقطع هوية='١١٣٠٢'>فَلَزِمَتْهُ الْهَاْءُ</مقطع>
  <مقطع هوية='٨٣٨٣٣'>وَإِنَّمَا تُرِيْدُ بِقَوْلِكَ <قبس>مَبْنِيٌّ عَلَيْهِ الْفِعْلُ</قبس></مقطع>
  <مقطع هوية='٩٧٥٧٢'>أَنَّهُ فِي مَوْضِعِ <حرف>مُنْطَلِقٍ</حرف>
  </مقطع>
  <مقطع هوية='١٣١١٧'>إِذَا قُلْتَ <قول هوية='٢٩٨٥٩'>عَبْدُ اللهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٢٥٧٢٦'>فَهُوَ فِي مَوْضِعِ هَذَا الَّذِي بُنِيَ عَلَى الْأَوَّلِ وَاْرْتَفَعَ بِهِ</مقطع>
  <مقطع هوية='٦١٦٨١'>فَإِنَّمَا قُلْتَ <حرف>عَبْدُ اللهِ</حرف>
  </مقطع>
  <مقطع هوية='٠٢١٩٨'>فَنَسَبْتَهُ لَهُ</مقطع>
  <مقطع هوية='٢٠٦٢٧'>ثُمَّ بَنَيْتَ عَلَيْهِ الْفِعْلَ</مقطع>
  <مقطع هوية='٦٦٠٨٤'>وَرَفَعْتَهُ بِالْاْبْتِدَاْءِ</مقطع>
  <مقطع هوية='٤٢٤٧٢'>وَمِثْلُ ذَلِكَ قَوْلُهُ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع هوية='٥٦٧٧٧'>
    <آية هوية='٣٢٨٢٧' سورة="٤١" آية="١٧">وَأَمَّا ثَمُوْدُ فَهَدَيْنَاْهُمْ</آية></مقطع>
  <مقطع هوية='٦٨١٥٧'>وَإِنَّمَا حَسُنَ أَنْ يُبْنَى الْفِعْلُ عَلَى الاِسْمِ</مقطع>
  <مقطع هوية='٣٤٢٧٦'>حَيْثُ كَاْنَ مُعْمَلًا فِي الْمُضْمَرِ وَشَغَلْتَهُ بِهِ</مقطع>
  <مقطع هوية='٤٥١٥٠'>وَلَوْلَا ذَلِكَ لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية='٣٣٥٢١'>لِأَنَّكَ لَمْ تَشْغَلْهُ بِشَيْءٍ</مقطع>
  <مقطع هوية='٣١٧٠١'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='٧٤٥٨٤'>زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٣٤١٩'>وَإِنَّمَا نَصَبَهُ عَلَى إِضْمَاْرِ فِعْلٍ هَذَا يُفَسِّرُهُ</مقطع>
  <مقطع هوية='٩٢٤٦٦'>كَأَنَّكَ قُلْتَ <قول هوية='٦١٤٩٢'>ضَرَبْتُ زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٤٠٦٤٦'>إِلَّا أَنَّهُمْ لَا يُظْهِرُوْنَ هَذَا الْفِعْلَ هُنَا</مقطع>
  <مقطع هوية='٨٤٥٩٩'>لِلِاسْتِغْنَاْءِ بِتَفْسِيْرِهِ</مقطع>
  <مقطع هوية='٨١٤٢٩'>فَالِٱسْمُ هَاهُنَا مَبْنِيٌّ عَلَى هَذَا الْمُضْمَرِ</مقطع>
  <مقطع هوية='٦١٦١٩'>وَمِثْلُ تَرْكِ إِظْهَاْرِ الْفِعْلِ هٰهُنَا</مقطع>
  <مقطع هوية='٧٨٨٤١'>تَرْكُ الْإِظْهَاْرِ فِي الْمَوْضِعِ الَّذِي تَقَدَّمَ فِيْهِ الْإِضْمَاْرُ</مقطع>
  <مقطع هوية='٧٥٨١٨'>وَسَتَرَاْهُ إِنْ شَاْءَ اللَّهُ</مقطع>
  <مقطع هوية='٧٢٣٣٤'>وَقَدْ قَرَأَ بَعْضُهُمْ</مقطع>
  <مقطع هوية='١٨٨٨٧'>
    <آية هوية='٥١١٦٥' سورة="٤١" آية="١٧">وَأَمَّا ثَمُوْدَ فَهَدَيْنَاْهُمْ</آية></مقطع>
  <مقطع هوية='٠٨٥١٩'>وَأَنْشَدُوْا هَذَا الْبَيْتَ عَلَى وَجْهَيْنِ</مقطع>
  <مقطع هوية='٧٥٦٦٧'>عَلَى النَّصْبِ وَالرَّفْعِ</مقطع>
  <مقطع هوية='٩١٢٩٦'>قَالَ بِشْرُ بْنُ أَبِىْ خَاْزِمٍ</مقطع>
  <شاهدة هوية='٤٦٧١٣'>
    <بيت>
      <مصراع>فَأَمَّا تَمِيْمٌ تَمِيْمُ بْنُ مُرٍّ</مصراع>
      <مصراع>فَأَلْفَاْهُمُ الْقَوْمُ رَوْبَى نِيَاْمَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٧٤٩٤'>وَمِنْهُ قَوْلُ ذِىْ الْرُّمَّةِ</مقطع>
  <شاهدة هوية='٩٨٧٢٩'>
    <بيت>
      <مصراع>إِذَا ابْنُ أَبِي مُوْسَى بِلَاْلٌ بَلَغْتِهِ</مصراع>
      <مصراع>فَقَاْمَ بِفَأْسٍ بَيْنَ وُصْلَيْكِ جَاْزِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٢٩١٨'>فَالنَّصْبُ عَرَبِيٌّ كَثِيْرٌ</مقطع>
  <مقطع هوية='٨٣٨٥١'>وَالرَّفْعُ أَجْوَدُ</مقطع>
  <مقطع هوية='١١٥١٦'>لِأَنَّهُ إِذَا أَرَاْدَ الْإِعْمَاْلَ</مقطع>
  <مقطع هوية='٦١٣٣٦'>فَأَقْرَبُ إِلَى ذَلِكَ</مقطع>
  <مقطع هوية='٠٢٨٣٥'>أَنْ يَقُوْلَ <قول هوية='٧٨٩٧٠'>ضَرَبْتُ زَيْدًا</قول> وَ<قول هوية='٠٠٣٧٠'>زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية='٤٦٩٨٠'>وَلَا يُعْمِلُ الْفِعْلَ فِي مُضْمَرٍ</مقطع>
  <مقطع هوية='١٧٧٢٨'>وَلَا يُتَنَاوَلُ بِهِ هَذَا الْمُتَنَاوَلَ الْبَعِيْدَ</مقطع>
  <مقطع هوية='٠٢٣٨٨'>وَكُلُّ هَذَا مِنْ كَلَامِهِمْ</مقطع>
  <رأس هو="٠">
    <عنوان>الْمَفْعُوْلُ الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ</عنوان>
  </رأس>
  <مقطع هوية='١٤٣١٠'>وَمِثْلُ هَذَا <قول هوية='٤٩١٨٢'>زَيْدًا أُعْطِيْتُ</قول>
  </مقطع>
  <مقطع هوية='٨٠٢٥٠'>وَ<قول هوية='٩٦٨٣٨'>أُعْطِيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٦٥٤١٢'>وَ<قول هوية='٣٧٨٨٥'>زَيْدٌ أُعْطِيْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٩٧٦٠٦'>لِأَنَّ <حرف>أُعْطِيْتُ</حرف> بِمَنْزِلَةِ <حرف>ضُرِبْتُ</حرف>
  </مقطع>
  <مقطع هوية='٠٦٩٣٧'>وَقَدْ بُيِّنَ الْمَفْعُوْلُ الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ فَِي أَوَّلِ الْكِتَاْبِ</مقطع>
  <رأس هو="٠">
    <عنوان>الْفِعْلُ الْمُتعَدّي وغَيْرُ الْمُتعَدّي</عنوان>
  </رأس>
  <مقطع هوية='٧٩٣٦٠'>فَإِنْ قُلْتَ <قول هوية='٧٦٧٢٣'>زَيْدٌ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٩٦٥٨٠'>فَهُوَ مِنَ النَّصْبِ أَبْعَدُ مِنْ ذٰلِكَ</مقطع>
  <مقطع هوية='٧٣٤٦٠'>لِأَنَّ الْمُضْمَرَ قَدْ خَرَجَ مِنْ الْفِعْلِ</مقطع>
  <مقطع هوية='٥٩٧١٩'>وَأُضِيْفَ الْفِعْلُ إِلَيْهِ بِالْبَاْءِ</مقطع>
  <مقطع هوية='٧٧٨٢١'>وَلَمْ يُوْصَلْ إِلَيْهِ الْفِعْلُ فِي اللَّفْظِ</مقطع>
  <مقطع هوية='١٩٢٣٢'>فَصَاْرَ كَقَوْلِكَ <قول هوية='٩٥٩٧٢'>زَيْدٌ لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٩٦٦٠٠'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='١٣٤٢٥'>زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='١٥٩٤٣'>تُرِيْدُ أَنْ تُفَسِّرَ بِهِ مُضْمَرًا</مقطع>
  <مقطع هوية='٥٩٤٣٣'>كَأَنَّكَ قُلْتَ إِذَا مَثَّلْتَ ذَلِكَ</مقطع>
  <مقطع هوية='٢٣٣٥٩'>
    <قول هوية='٩٣٥٢٠'>جَعَلْتُ زَيْدًا عَلَى طَرِيْقِي مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٦٢٠٣١'>وَلَكِنَّكَ لَا تُظْهِرُ هَذَا الْأَوَّلَ لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٨٩٧٣٥'>وَإِذَا قُلْتَ <قول هوية='٩٣٦٧٤'>زَيْدٌ لَقِيْتُ أَخَاْهُ</قول> فَهُوَ كَذَلِكَ</مقطع>
  <مقطع هوية='٥٣٣٦٢'>وَإِنْ شِئْتَ نَصَبْتَ</مقطع>
  <مقطع هوية='١٩٨٤٨'>لِأَنَّهُ إِذَا وَقَعَ عَلَى شَيْءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع هوية='٧١٣٥٩'>فَكَأَنَّهُ قَدْ وَقَعَ بِهِ</مقطع>
  <مقطع هوية='٨٠٥٦٣'>وَالدَّلِيلُ عَلَى ذَلِكَ أَنَّ الرَّجُلَ يَقُوْلُ</مقطع>
  <مقطع هوية='٩٦٧١٦'>
    <قول هوية='٦٣٧٥٢'>أَهَنْتَ زَيْدًا بِإِهَاْنَتِكِ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٨٧٧٩٢'>وَ<قول هوية='٧٤٨٥٤'>أَكْرَمْتَهُ بِإِكْرَاْمِكَ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٩٢٧٨٨'>وَهَذَا النَّحْوُ فِي الْكَلَاْمِ كَثِيْرٌ</مقطع>
  <مقطع هوية='٤٠١١١'>يَقُوْلُ الرَّجُلُ <قول هوية='٩١٨٩٣'>إِنَّمَا أَعْطَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠٥٢٧٥'>وَإِنَّمَا يُرِيْدُ <قول هوية='٥٧٦٥٦'>لِمَكَاْنِ زَيْدٍ أَعْطَيْتُ فُلَاْنًا</قول>
  </مقطع>
  <مقطع هوية='٣٦٦٧٨'>وَإِذَا نَصَبْتَ <قول هوية='٩٨٠٢٨'>زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٦٤٧٠٣'>فَكَأَنَّهُ قَاْلَ <قول هوية='٨٢٤٠٧'>لَاْبَسْتُ زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٨٨٦٨٥'>وَهَذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية='٣٩١٦٦'>فَجَرَى هَذَا عَلَى مَا جَرَى عَلَيْهِ قَوْلُكَ <قول هوية='٦٩٠٤٦'>أَكْرَمْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٩٨٤٧٠'>وَإِنَّمَا وَصَلَتْ الْأَثْرَةُ إِلَى غَيْرِهِ</مقطع>
  <مقطع هوية='٣٢٣١٤'>وَالرَّفْعُ فِي هَذَا أَحْسَنُ وَأَجْوَدُ</مقطع>
  <مقطع هوية='٢٧٣١٧'>لِأَنَّ أَقْرَبَ إِلَى ذَلِكَ أَنْ تَقُوْلَ</مقطع>
  <مقطع هوية='٥٥٥٢٠'>
    <قول هوية='٣٣٩٠٦'>مَرَرْتُ بِزَيْدٍ وَلَقِيْتُ أَخَا عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٥٥٥٨٠'>وَمِثْلُ هَذَا فِي الْبِنَاْءِ عَلَى الْفِعْلِ وَبِنَاْءُ الْفِعْلِ عَلَيْهِ <حرف>أَيُّهُمْ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٦٤٧'>وَذٰلِكَ قَوْلُهُمْ <قول هوية='٠٦٧٣٣'>أَيَّهُمْ تَرَ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية='٧٨٤٦٦'>وَ<قول هوية='٠٤٣٥٠'>أَيُّهُمْ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٨٦٢'>وَالنَّصْبُ عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٩٣٣٦٧'>لِأَنَّهُ كَأَنَّهُ قَاْلَ <قول هوية='٣٢٦٢٣'>أَيَّهُمْ تَرَ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية='٧٢٣٥٧'>فَهُوَ مِثْلُ <حرف>زَيْدٍ</حرف> فِي هَذَا الْبَاْبِ</مقطع>
  <مقطع هوية='٨٤١٥٠'>وَقَدْ يُفَاْرِقُهُ فِي أَشْيَاْءَ كَثِيْرَةٍ</مقطع>
  <مقطع هوية='٤٦٠٤٦'>سَتُبَيَّنُ إِنِ شَاْءَ اللَّهُ</مقطع>
