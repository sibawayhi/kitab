  <عنوان>
    <مقطع هوية="60DD5" رقم="١">هٰذَا بَاْبُ مَا يَكُوْنُ فِيْهِ الاِسْمُ مَبْنِيًّا عَلَى الْفِعْلِ</مقطع>
    <مقطع هوية="F1291" رقم="٢">قُدِّمَ أَوْ أُخِّرَ</مقطع>
    <مقطع هوية="B2885" رقم="٣">وَمَا يَكُوْنُ فِيْهِ الْفِعْلُ مَبْنِيًّا عَلَى الْاِسْمِ</مقطع>
  </عنوان>
  <مقطع هوية="ADA3E" رقم="٤">فَإِذَا بَنَيْتَ الِاسْمَ عَلَيْهِ قُلْتَ <قول هوية="1043F" رقم="١">ضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية="51816" رقم="٥">وَهُوَ الْحَدُّ</مقطع>
  <مقطع هوية="35C14" رقم="٦">لِأَنَّكَ تُرِيْدُ أَنْ تُعْمِلَهُ</مقطع>
  <مقطع هوية="CE020" رقم="٧">وَتَحْمِلَ عَلَيْهِ الِاسْمَ</مقطع>
  <مقطع هوية="DC5A1" رقم="٨">كَمَا كَاْنَ الْحَدُّ <قول هوية="94E2A" رقم="٢">ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية="C65E2" رقم="٩">حَيْثُ كَاْنَ <حرف>زَيْدٌ</حرف> أَوَّلَ مَا تَشْغَلُ بِهِ الْفِعْلَ</مقطع>
  <مقطع هوية="59926" رقم="١٠">وَكَذَلِكَ هَذَا إِذَا كَاْنَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية="EBA0F" رقم="١١">وَإِنْ قَدَّمْتَ الاِسْمَ فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع هوية="74CCD" رقم="١٢">كَمَا كَاْنَ ذَلِكَ عَرَبِيًّا جَيِّدًا</مقطع>
  <مقطع هوية="469DB" رقم="١٣">وَذَلِكَ قَوْلُكَ <قول هوية="3BDE9" رقم="٣">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية="5C8D2" رقم="١٤">وَالِاهْتِمَاْمُ وَالْعِنَاْيَةُ هُنَا فَِي التَّقْدِيْمِ وَالتَّأْخِيْرِ سَوَاْءٌ</مقطع>
  <مقطع هوية="BD640" رقم="١٥">مِثْلُهُ فِي <قول هوية="81367" رقم="٤">ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية="EA319" رقم="١٦">وَ<قول هوية="8FB80" رقم="٥">ضَرَبَ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية="07415" رقم="١٧">فَإِذَا بَنَيْتَ الْفِعْلَ عَلَى الِاسْمِ قُلْتَ <قول هوية="879AB" رقم="٦">زَيْدٌ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية="1598C" رقم="١٨">فَلَزِمَتْهُ الْهَاْءُ</مقطع>
  <مقطع هوية="BC273" رقم="١٩">وَإِنَّمَا تُرِيْدُ بِقَوْلِكَ <حرف>مَبْنِيٌّ عَلَيْهِ الْفِعْلُ</حرف>
  </مقطع>
  <مقطع هوية="0E158" رقم="٢٠">أَنَّهُ فِي مَوْضِعِ <حرف>مُنْطَلِقٍ</حرف>
  </مقطع>
  <مقطع هوية="93059" رقم="٢١">إِذَا قُلْتَ <قول هوية="4AFC2" رقم="٧">عَبْدُ اللَّهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية="DF48D" رقم="٢٢">فَهُوَ فِي مَوْضِعِ هَذَا الَّذِي بُنِيَ عَلَى الْأَوَّلِ وَاْرْتَفَعَ بِهِ</مقطع>
  <مقطع هوية="E5599" رقم="٢٣">فَإِنَّمَا قُلْتَ <حرف>عَبْدُ اللَّهِ</حرف>
  </مقطع>
  <مقطع هوية="6F19A" رقم="٢٤">فَنَسَبْتَهُ لَهُ</مقطع>
  <مقطع هوية="475F7" رقم="٢٥">ثُمَّ بَنَيْتَ عَلَيْهِ الْفِعْلَ</مقطع>
  <مقطع هوية="BD0C1" رقم="٢٦">وَرَفَعْتَهُ بِالْاْبْتِدَاْءِ</مقطع>
  <مقطع هوية="A069F" رقم="٢٧">وَمِثْلُ ذَلِكَ قَوْلُهُ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع هوية="1D76D" رقم="٢٨">
    <آية هوية="6CBD3" سورة="٤١" آية="١١٧">وَأَمَّا ثَمُوْدُ فَهَدَيْنَاهُمْ</آية>
  </مقطع>
  <مقطع هوية="FB02A" رقم="٢٩">وَإِنَّمَا حَسُنَ أَنْ يُبْنَى الْفِعْلُ عَلَى الاِسْمِ</مقطع>
  <مقطع هوية="5BE9D" رقم="٣٠">حَيْثُ كَاْنَ مُعْمَلًا فِي الْمُضْمَرِ وَشَغَلْتَهُ بِهِ</مقطع>
  <مقطع هوية="AEC84" رقم="٣١">وَلَوْلَا ذَلِكَ لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية="AB983" رقم="٣٢">لِأَنَّكَ لَمْ تَشْغَلْهُ بِشَيْءٍ</مقطع>
  <مقطع هوية="D62D7" رقم="٣٣">وَإِنْ شِئْتَ قُلْتَ <قول هوية="840CD" رقم="٨">زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية="09C62" رقم="٣٤">وَإِنَّمَا نَصَبَهُ عَلَى إِضْمَاْرِ فِعْلٍ هَذَا يُفَسِّرُهُ</مقطع>
  <مقطع هوية="718DD" رقم="٣٥">كَأَنَّكَ قُلْتَ <قول هوية="9FBF5" رقم="٩">ضَرَبْتُ زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية="711D9" رقم="٣٦">إِلَّا أَنَّهُمْ لَا يُظْهِرُوْنَ هَذَا الْفِعْلَ هُنَا</مقطع>
  <مقطع هوية="881A9" رقم="٣٧">لِلِاسْتِغْنَاْءِ بِتَفْسِيْرِهِ</مقطع>
  <مقطع هوية="89AA0" رقم="٣٨">فَالِٱسْمُ هَاهُنَا مَبْنِيٌّ عَلَى هَذَا الْمُضْمَرِ</مقطع>
  <مقطع هوية="DE86F" رقم="٣٩">وَمِثْلُ تَرْكِ إِظْهَاْرِ الْفِعْلِ هٰهُنَا</مقطع>
  <مقطع هوية="68D70" رقم="٤٠">تَرْكُ الْإِظْهَاْرِ فِي الْمَوْضِعِ الَّذِي تَقَدَّمَ فِيْهِ الْإِضْمَاْرُ</مقطع>
  <مقطع هوية="23018" رقم="٤١">وَسَتَرَاْهُ إِنْ شَاْءَ اللَّهُ</مقطع>
  <مقطع هوية="81363" رقم="٤٢">وَقَدْ قَرَأَ بَعْضُهُمْ</مقطع>
  <مقطع هوية="0AC15" رقم="٤٣">
    <آية هوية="890C6" سورة="٤١" آية="١١٧">وَأَمَّا ثَمُوْدَ فَهَدَيْنَاهُمْ</آية>
  </مقطع>
  <مقطع هوية="35A6D" رقم="٤٤">وَأَنْشَدُوا هَذَا الْبَيْتَ عَلَى وَجْهَيْنِ</مقطع>
  <مقطع هوية="A92E4" رقم="٤٥">عَلَى النَّصْبِ وَالرَّفْعِ</مقطع>
  <مقطع هوية="C1415" رقم="٤٦">قَالَ بِشْرُ بْنُ أَبِىْ خَاْزِمٍ</مقطع>
  <شاهدة هوية="40875" مقطع="٤٧" رقم="1">
    <بيت>
      <مصراع>فَأَمَّا تَمِيْمٌ تَمِيْمُ بِنُ مُرٍّ</مصراع>
      <مصراع>فَأَلْفَاهُمُ الْقَوْمُ رَوْبَى نِيَامَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية="0B7B3" رقم="٤٨">وَمِنْهُ قَوْلُ ذِىْ الْرُّمَّةِ</مقطع>
  <شاهدة هوية="1E215" مقطع="٤٩" رقم="2">
    <بيت>
      <مصراع>إِذَا ابْنُ أَبِيْ مُوْسَىْ بِلَالٌ بَلُغَتِهُ</مصراع>
      <مصراع>فَقَامَ بِفَأسَ بَيْنَ وَْصلّيكِ جَاْزِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية="5DEF2" رقم="٥٠">فَالنَّصْبُ عَرَبِيٌّ كَثِيْرٌ</مقطع>
  <مقطع هوية="59F8A" رقم="٥١">وَالرَّفْعُ أَجْوَدُ</مقطع>
  <مقطع هوية="CD2E0" رقم="٥٢">لِأَنَّهُ إِذَا أَرَاْدَ الْإِعْمَالَ</مقطع>
  <مقطع هوية="17873" رقم="٥٣">فَأَقْرَبُ إِلَى ذَلِكَ</مقطع>
  <مقطع هوية="C331E" رقم="٥٤">أَنْ يَقُوْلَ <قول هوية="FF11A" رقم="١٠">ضَرَبْتُ زَيْدًا</قول> وَ<قول هوية="0D3AE" رقم="١١">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية="7BC93" رقم="٥٥">وَلَا يُعْمِلُ الْفِعْلَ فِي مُضْمَرٍ</مقطع>
  <مقطع هوية="5ADC8" رقم="٥٦">وَلَا يُتَنَاوَلُ بِهِ هَذَا الْمُتَنَاوَلَ الْبَعِيْدَ</مقطع>
  <مقطع هوية="BCB4A" رقم="٥٧">وُكُلُّ هَذَا مِنْ كَلَامِهِمْ</مقطع>
  <مقطع هوية="7C0D2" رقم="٥٨">وَمِثْلُ هَذَا <قول هوية="295B3" رقم="١٢">زَيْدًا أُعْطِيْتُ</قول>
  </مقطع>
  <مقطع هوية="CD42A" رقم="٥٩">وَ<قول هوية="ECA3A" رقم="١٣">أُعْطِيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية="F6D23" رقم="٦٠">وَ<قول هوية="339F2" رقم="١٤">زَيْدٌ أُعْطِيْتُهُ</قول>
  </مقطع>
  <مقطع هوية="18C55" رقم="٦١">لِأَنَّ <حرف>أُعْطِيْتُ</حرف> بِمَنْزِلَةِ <حرف>ضُرِبْتُ</حرف>
  </مقطع>
  <مقطع هوية="9B950" رقم="٦٢">وَقَدْ بُيِّنَ الْمَفْعُوْلُ الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ فَِي أَوَّلِ الْكِتَاْبِ</مقطع>
  <مقطع هوية="26805" رقم="٦٣">فَإِنْ قُلْتَ <قول هوية="AE408" رقم="١٥">زَيْدٌ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية="62169" رقم="٦٤">فَهُوَ مِنَ النَّصْبِ أَبْعَدُ مِنْ ذَلِكَ</مقطع>
  <مقطع هوية="4FF8B" رقم="٦٥">لِأَنَّ الْمُضْمَرَ قَدْ خَرَجَ مِنْ الْفِعْلِ</مقطع>
  <مقطع هوية="2E683" رقم="٦٦">وَأُضِيْفَ الْفِعْلُ إِلَيْهِ بِالْبَاْءِ</مقطع>
  <مقطع هوية="B893A" رقم="٦٧">وَلَمْ يُوْصَلْ إِلَيْهِ الْفِعْلُ فِي اللَّفْظِ</مقطع>
  <مقطع هوية="9B99F" رقم="٦٨">فَصَاْرَ كَقَوْلِكَ <قول هوية="CC1D8" رقم="١٦">زَيْدٌ لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية="87A67" رقم="٦٩">وَإِنْ شِئْتَ قُلْتَ <قول هوية="55F51" رقم="١٧">زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية="1315B" رقم="٧٠">تُرِيْدُ أَنْ تُفَسِّرَ بِهِ مُضْمَرًا</مقطع>
  <مقطع هوية="EC86F" رقم="٧١">كَأَنَّكَ قُلْتَ إِذَا مَثَّلْتَ ذَلِكَ</مقطع>
  <مقطع هوية="4591C" رقم="٧٢">
    <قول هوية="E2D70" رقم="١٨">جَعَلْتُ زَيْدًا عَلَى طَرِيْقِي مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية="70C7B" رقم="٧٣">وَلَكِنَّكَ لَا تُظْهِرُ هَذَا الْأَوَّلَ لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية="C6342" رقم="٧٤">وَإِذَا قُلْتَ <قول هوية="439F0" رقم="١٩">زَيْدٌ لَقِيْتُ أَخَاهُ</قول> فَهُوَ كَذَلِكَ</مقطع>
  <مقطع هوية="45C71" رقم="٧٥">وَإِنْ شِئْتَ نَصَبْتَ</مقطع>
  <مقطع هوية="7ABB6" رقم="٧٦">لِأَنَّهُ إِذَا وَقَعَ عَلَى شَيْءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع هوية="1E1CC" رقم="٧٧">فَكَأَنَّهُ قَدْ وَقَعَ بِهِ</مقطع>
  <مقطع هوية="DC474" رقم="٧٨">وَالدَّلِيلُ عَلَى ذَلِكَ أَنَّ الرَّجُلَ يَقُوْلُ</مقطع>
  <مقطع هوية="CFA1B" رقم="٧٩">
    <قول هوية="6DBB5" رقم="٢٠">أَهَنْتَ زَيْدًا بِإِهَاْنَتِكِ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية="9F378" رقم="٨٠">وَ<قول هوية="2FA1C" رقم="٢١">أَكْرَمْتَهُ بِإِكْرَاْمِكَ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية="7C88B" رقم="٨١">وَهَذَا النَّحْوُ فِي الْكَلَاْمِ كَثِيْرٌ</مقطع>
  <مقطع هوية="B0FD6" رقم="٨٢">يَقُوْلُ الرَّجُلُ <قول هوية="3806A" رقم="٢٢">إِنَّمَا أَعْطَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية="B1AB0" رقم="٨٣">وَإِنَّمَا يُرِيْدُ <قول هوية="2B764" رقم="٢٣">لِمَكَانِ زَيْدٍ أَعْطَيْتُ فُلَاْنًا</قول>
  </مقطع>
  <مقطع هوية="082D3" رقم="٨٤">وَإِذَا نَصَبْتَ <قول هوية="9FDD0" رقم="٢٤">زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية="9FC9F" رقم="٨٥">فَكَأَنَّهُ قَاْلَ <قول هوية="2853F" رقم="٢٥">لَاْبَسْتُ زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية="4D3D9" رقم="٨٦">وَهَذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية="1AC41" رقم="٨٧">فَجَرَى هَذَا عَلَى مَا جَرَى عَلَيْهِ قَوْلُكَ <قول هوية="9A17B" رقم="٢٦">أَكْرَمْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية="6D98C" رقم="٨٨">وَإِنَّمَا وَصَلَتْ الْأَثْرَةُ إِلَى غَيْرِهِ</مقطع>
  <مقطع هوية="0D59C" رقم="٨٩">وَالرَّفْعُ فِي هَذَا أَحْسَنُ وَأَجْوَدُ</مقطع>
  <مقطع هوية="472B1" رقم="٩٠">لِأَنَّ أَقْرَبَ إِلَى ذَلِكَ أَنْ تَقُوْلَ</مقطع>
  <مقطع هوية="D83DD" رقم="٩١">
    <قول هوية="E9893" رقم="٢٧">مَرَرْتُ بِزَيْدٍ وَلَقِيْتُ أَخَا عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية="8F9B6" رقم="٩٢">وَمِثْلُ هَذَا فِي الْبِنَاْءِ عَلَى الْفِعْلِ وَبِنَاْءُ الْفِعْلِ عَلَيْهِ <حرف>أَيُّهُمْ</حرف>
  </مقطع>
  <مقطع هوية="7E14F" رقم="٩٣">وَذَلِكَ قَوْلُهُمْ <قول هوية="B82C8" رقم="٢٨">أَيَّهُمْ تَرَ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية="CB3A3" رقم="٩٤">وَ<قول هوية="E7C8C" رقم="٢٩">أَيُّهُمْ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية="7873F" رقم="٩٥">وَالنَّصْبُ عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية="C01D2" رقم="٩٦">لِأَنَّهُ كَأَنَّهُ قَاْلَ <قول هوية="EA3CA" رقم="٣٠">أَيَّهُمْ تَرَ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية="A41BB" رقم="٩٧">فَهُوَ مِثْلُ <حرف>زَيْدٍ</حرف> فِي هَذَا الْبَاْبِ</مقطع>
  <مقطع هوية="B9613" رقم="٩٨">وَقَدْ يُفَاْرِقُهُ فِي أَشْيَاْءَ كَثِيْرَةٍ</مقطع>
  <مقطع هوية="5FCFD" رقم="٩٩">سَتُبَيَّنُ إِنِ شَاْءَ اللَّهُ</مقطع>
