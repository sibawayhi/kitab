<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤١"
     درنبورج="١-٣١"
     البكاء="١-١٤٧"
     هارون="١-٨٠"
     يعقوب="١-١٣٣"
     رقم="٢٤">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يَكُوْنُ فِيْهِ الاِسْمُ مَبْنِيًّا عَلَى الْفِعْلِ</مقطع>
    <مقطع رقم="٢">قُدِّمَ أَوْ أُخِّرَ</مقطع>
    <مقطع رقم="٣">وَمَا يَكُوْنُ فِيْهِ الْفِعْلُ مَبْنِيًّا عَلَى الْاِسْمِ</مقطع>
  </عنوان>
  <مقطع رقم="٤">فَإِذَا بَنَيْتَ الِاسْمَ عَلَيْهِ قُلْتَ <قول رقم="١">ضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٥">وَهُوَ الْحَدُّ</مقطع>
  <مقطع رقم="٦">لِأَنَّكَ تُرِيْدُ أَنْ تُعْمِلَهُ</مقطع>
  <مقطع رقم="٧">وَتَحْمِلَ عَلَيْهِ الِاسْمَ</مقطع>
  <مقطع رقم="٨">كَمَا كَاْنَ الْحَدُّ <قول رقم="٢">ضَرَبَ زَيْدٌ عَمْرًا</قول></مقطع>
  <مقطع رقم="٩">حَيْثُ كَاْنَ <حرف>زَيْدٌ</حرف> أَوَّلَ مَا تَشْغَلُ بِهِ الْفِعْلَ</مقطع>
  <مقطع رقم="١٠">وَكَذَلِكَ هَذَا إِذَا كَاْنَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="١١">وَإِنْ قَدَّمْتَ الاِسْمَ فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع رقم="١٢">كَمَا كَاْنَ ذَلِكَ عَرَبِيًّا جَيِّدًا</مقطع>
  <مقطع رقم="١٣">وَذَلِكَ قَوْلُكَ <قول رقم="٣">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع رقم="١٤">وَالِاهْتِمَاْمُ وَالْعِنَاْيَةُ هُنَا فَِي التَّقْدِيْمِ وَالتَّأْخِيْرِ سَوَاْءٌ</مقطع>
  <مقطع رقم="١٥">مِثْلُهُ فِي <قول رقم="٤">ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="١٦">وَ<قول رقم="٥">ضَرَبَ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٧">فَإِذَا بَنَيْتَ الْفِعْلَ عَلَى الِاسْمِ قُلْتَ <قول رقم="٦">زَيْدٌ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٨">فَلَزِمَتْهُ الْهَاْءُ</مقطع>
  <مقطع رقم="١٩">وَإِنَّمَا تُرِيْدُ بِقَوْلِكَ <حرف>مَبْنِيٌّ عَلَيْهِ الْفِعْلُ</حرف>
  </مقطع>
  <مقطع رقم="٢٠">أَنَّهُ فِي مَوْضِعِ <حرف>مُنْطَلِقٍ</حرف>
  </مقطع>
  <مقطع رقم="٢١">إِذَا قُلْتَ <قول رقم="٧">عَبْدُ اللَّهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٢٢">فَهُوَ فِي مَوْضِعِ هَذَا الَّذِي بُنِيَ عَلَى الْأَوَّلِ وَاْرْتَفَعَ بِهِ</مقطع>
  <مقطع رقم="٢٣">فَإِنَّمَا قُلْتَ <حرف>عَبْدُ اللَّهِ</حرف>
  </مقطع>
  <مقطع رقم="٢٤">فَنَسَبْتَهُ لَهُ</مقطع>
  <مقطع رقم="٢٥">ثُمَّ بَنَيْتَ عَلَيْهِ الْفِعْلَ</مقطع>
  <مقطع رقم="٢٦">وَرَفَعْتَهُ بِالْاْبْتِدَاْءِ</مقطع>
  <مقطع رقم="٢٧">وَمِثْلُ ذَلِكَ قَوْلُهُ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع رقم="٢٨"><آية سورة="٤١" آية="١١٧">وَأَمَّا ثَمُوْدُ فَهَدَيْنَاهُمْ</آية></مقطع>
  <مقطع رقم="٢٩">وَإِنَّمَا حَسُنَ أَنْ يُبْنَى الْفِعْلُ عَلَى الاِسْمِ</مقطع>
  <مقطع رقم="٣٠">حَيْثُ كَاْنَ مُعْمَلًا فِي الْمُضْمَرِ وَشَغَلْتَهُ بِهِ</مقطع>
  <مقطع رقم="٣١">وَلَوْلَا ذَلِكَ لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٣٢">لِأَنَّكَ لَمْ تَشْغَلْهُ بِشَيْءٍ</مقطع>
  <مقطع رقم="٣٣">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٨">زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَإِنَّمَا نَصَبَهُ عَلَى إِضْمَاْرِ فِعْلٍ</مقطع>
  <مقطع رقم="٣٥">هَذَا يُفَسِّرُهُ</مقطع>
  <مقطع رقم="٣٦">كَأَنَّكَ قُلْتَ <قول رقم="٩">ضَرَبْتُ زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٣٧">إِلَّا أَنَّهُمْ لَا يُظْهِرُوْنَ هَذَا الْفِعْلَ هُنَا</مقطع>
  <مقطع رقم="٣٨">لِلِاسْتِغْنَاْءِ بِتَفْسِيْرِهِ</مقطع>
  <مقطع رقم="٣٩">فَالِٱسْمُ هَاهُنَا مَبْنِيٌّ عَلَى هَذَا الْمُضْمَرِ</مقطع>
  <مقطع رقم="٤٠">وَمِثْلُ تَرْكِ إِظْهَاْرِ الْفِعْلِ هٰهُنَا</مقطع>
  <مقطع رقم="٤١">تَرْكُ الْإِظْهَاْرِ فِي الْمَوْضِعِ الَّذِي تَقَدَّمَ فِيْهِ الْإِضْمَاْرُ</مقطع>
  <مقطع رقم="٤٢">وَسَتَرَاْهُ إِنْ شَاْءَ اللَّهُ</مقطع>
  <مقطع رقم="٤٣">وَقَدْ قَرَأَ بَعْضُهُمْ</مقطع>
  <مقطع رقم="٤٤">
    <آية سورة="٤١" آية="١١٧">وَأَمَّا ثَمُوْدَ فَهَدَيْنَاهُمْ</آية>
  </مقطع>
  <مقطع رقم="٤٥">وَأَنْشَدُوا هَذَا الْبَيْتَ عَلَى وَجْهَيْنِ</مقطع>
  <مقطع رقم="٤٦">عَلَى النَّصْبِ وَالرَّفْعِ</مقطع>
  <مقطع رقم="٤٧">قَالَ بِشْرُ بْنُ أَبِىْ خَاْزِمٍ</مقطع>
  <شاهدة مقطع="٤٨" رقم="١">
    <بيت>
      <مصراع>فَأَمَّا تَمِيْمٌ تَمِيْمُ بِنُ مُرٍّ</مصراع>
      <مصراع>فَأَلْفَاهُمُ الْقَوْمُ رَوْبَى نِيَامَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٩">وَمِنْهُ قَوْلُ ذِىْ الْرُّمَّةِ</مقطع>
  <شاهدة مقطع="٥٠" رقم="٢">
    <بيت>
      <مصراع>إِذَا ابْنُ أَبِيْ مُوْسَىْ بِلَالٌ بَلُغَتِهُ</مصراع>
      <مصراع>فَقَامَ بِفَأسَ بَيْنَ وَْصلّيكِ جَاْزِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥١">فَالنَّصْبُ عَرَبِيٌّ كَثِيْرٌ</مقطع>
  <مقطع رقم="٥٢">وَالرَّفْعُ أَجْوَدُ</مقطع>
  <مقطع رقم="٥٣">لِأَنَّهُ إِذَا أَرَاْدَ الْإِعْمَالَ</مقطع>
  <مقطع رقم="٥٤">فَأَقْرَبُ إِلَى ذَلِكَ</مقطع>
  <مقطع رقم="٥٥">أَنْ يَقُوْلَ <قول رقم="١٠">ضَرَبْتُ زَيْدًا</قول> وَ<قول رقم="١١">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع رقم="٥٦">وَلَا يُعْمِلُ الْفِعْلَ فِي مُضْمَرٍ</مقطع>
  <مقطع رقم="٥٧">وَلَا يُتَنَاوَلُ بِهِ هَذَا الْمُتَنَاوَلَ الْبَعِيْدَ</مقطع>
  <مقطع رقم="٥٨">وُكُلُّ هَذَا مِنْ كَلَامِهِمْ</مقطع>
  <مقطع رقم="٥٩">وَمِثْلُ هَذَا <قول رقم="١٢">زَيْدًا أُعْطِيْتُ</قول>
  </مقطع>
  <مقطع رقم="٦٠">وَ<قول رقم="١٣">أُعْطِيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٦١">وَ<قول رقم="١٤">زَيْدٌ أُعْطِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٦٢">لِأَنَّ <حرف>أُعْطِيْتُ</حرف> بِمَنْزِلَةِ <حرف>ضُرِبْتُ</حرف>
  </مقطع>
  <مقطع رقم="٦٣">وَقَدْ بُيِّنَ الْمَفْعُوْلُ الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ فَِي أَوَّلِ الْكِتَاْبِ</مقطع>
  <مقطع رقم="٦٤">فَإِنْ قُلْتَ <قول رقم="١٥">زَيْدٌ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٦٥">فَهُوَ مِنَ النَّصْبِ أَبْعَدُ مِنْ ذَلِكَ</مقطع>
  <مقطع رقم="٦٦">لِأَنَّ الْمُضْمَرَ قَدْ خَرَجَ مِنْ الْفِعْلِ</مقطع>
  <مقطع رقم="٦٧">وَأُضِيْفَ الْفِعْلُ إِلَيْهِ بِالْبَاْءِ</مقطع>
  <مقطع رقم="٦٨">وَلَمْ يُوْصَلْ إِلَيْهِ الْفِعْلُ فِي اللَّفْظِ</مقطع>
  <مقطع رقم="٦٩">فَصَاْرَ كَقَوْلِكَ <قول رقم="١٦">زَيْدٌ لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٧٠">وَإِنْ شِئْتَ قُلْتَ <قول رقم="١٧">زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٧١">تُرِيْدُ أَنْ تُفَسِّرَ بِهِ مُضْمَرًا</مقطع>
  <مقطع رقم="٧٢">كَأَنَّكَ قُلْتَ إِذَا مَثَّلْتَ ذَلِكَ</مقطع>
  <مقطع رقم="٧٣">
    <قول رقم="١٨">جَعَلْتُ زَيْدًا عَلَى طَرِيْقِي مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٧٤">وَلَكِنَّكَ لَا تُظْهِرُ هَذَا الْأَوَّلَ لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٧٥">وَإِذَا قُلْتَ <قول رقم="١٩">زَيْدٌ لَقِيْتُ أَخَاهُ</قول> فَهُوَ كَذَلِكَ</مقطع>
  <مقطع رقم="٧٦">وَإِنْ شِئْتَ نَصَبْتَ</مقطع>
  <مقطع رقم="٧٧">لِأَنَّهُ إِذَا وَقَعَ عَلَى شَيْءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="٧٨">فَكَأَنَّهُ قَدْ وَقَعَ بِهِ</مقطع>
  <مقطع رقم="٧٩">وَالدَّلِيلُ عَلَى ذَلِكَ أَنَّ الرَّجُلَ يَقُوْلُ</مقطع>
  <مقطع رقم="٨٠">
    <قول رقم="٢٠">أَهَنْتَ زَيْدًا بِإِهَاْنَتِكِ أَخَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٨١">وَ<قول رقم="٢١">أَكْرَمْتَهُ بِإِكْرَاْمِكَ أَخَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٨٢">وَهَذَا النَّحْوُ فِي الْكَلَاْمِ كَثِيْرٌ</مقطع>
  <مقطع رقم="٨٣">يَقُوْلُ الرَّجُلُ <قول رقم="٢٢">إِنَّمَا أَعْطَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٨٤">وَإِنَّمَا يُرِيْدُ <قول رقم="٢٣">لِمَكَانِ زَيْدٍ أَعْطَيْتُ فُلَاْنًا</قول>
  </مقطع>
  <مقطع رقم="٨٥">وَإِذَا نَصَبْتَ <قول رقم="٢٤">زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٨٦">فَكَأَنَّهُ قَاْلَ <قول رقم="٢٥">لَاْبَسْتُ زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَهَذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع رقم="٨٨">فَجَرَى هَذَا عَلَى مَا جَرَى عَلَيْهِ قَوْلُكَ <قول رقم="٢٦">أَكْرَمْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٨٩">وَإِنَّمَا وَصَلَتْ الْأَثْرَةُ إِلَى غَيْرِهِ</مقطع>
  <مقطع رقم="٩٠">وَالرَّفْعُ فِي هَذَا أَحْسَنُ وَأَجْوَدُ</مقطع>
  <مقطع رقم="٩١">لِأَنَّ أَقْرَبَ إِلَى ذَلِكَ أَنْ تَقُوْلَ</مقطع>
  <مقطع رقم="٩٢">
    <قول رقم="٢٧">مَرَرْتُ بِزَيْدٍ وَلَقِيْتُ أَخَا عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٩٣">وَمِثْلُ هَذَا فِي الْبِنَاْءِ عَلَى الْفِعْلِ وَبِنَاْءُ الْفِعْلِ عَلَيْهِ <حرف>أَيُّهُمْ</حرف>
  </مقطع>
  <مقطع رقم="٩٤">وَذَلِكَ قَوْلُهُمْ <قول رقم="٢٨">أَيَّهُمْ تَرَ يَأْتِكَ</قول>
  </مقطع>
  <مقطع رقم="٩٥">وَ<قول رقم="٢٩">أَيُّهُمْ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع رقم="٩٦">وَالنَّصْبُ عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٩٧">لِأَنَّهُ كَأَنَّهُ قَاْلَ <قول رقم="٣٠">أَيَّهُمْ تَرَ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع رقم="٩٨">فَهُوَ مِثْلُ <حرف>زَيْدٍ</حرف> فِي هَذَا الْبَاْبِ</مقطع>
  <مقطع رقم="٩٩">وَقَدْ يُفَاْرِقُهُ فِي أَشْيَاْءَ كَثِيْرَةٍ</مقطع>
