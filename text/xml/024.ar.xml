<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤١"
     درنبورج="١-٣١"
     البكاء="١-١٤٧"
     هارون="١-٨٠"
     يعقوب="١-١٣٣"
     رقم="٢٤">
  <عنوان>
    <مقطع هوية='٥٥٠٧٣' رقم="١">هٰذَا بَاْبُ مَا يَكُوْنُ فِيْهِ الاِسْمُ مَبْنِيًّا عَلَى الْفِعْلِ</مقطع>
    <مقطع هوية='٨٩٦٤٨' رقم="٢">قُدِّمَ أَوْ أُخِّرَ</مقطع>
    <مقطع هوية='٩٤٩٣٦' رقم="٣">وَمَا يَكُوْنُ فِيْهِ الْفِعْلُ مَبْنِيًّا عَلَى الْاِسْمِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٩١٨١' رقم="٤">فَإِذَا بَنَيْتَ الِاسْمَ عَلَيْهِ قُلْتَ <قول هوية='١٣٠٨٩' رقم="١">ضَرَبْتُ زَيْدًا</قول></مقطع>
  <مقطع هوية='٤١٢٨٣' رقم="٥">وَهُوَ الْحَدُّ</مقطع>
  <مقطع هوية='٢٦٨٦١' رقم="٦">لِأَنَّكَ تُرِيْدُ أَنْ تُعْمِلَهُ</مقطع>
  <مقطع هوية='٣٧٠٤٩' رقم="٧">وَتَحْمِلَ عَلَيْهِ الِاسْمَ</مقطع>
  <مقطع هوية='٠٧٧٣٨' رقم="٨">كَمَا كَاْنَ الْحَدُّ <قول هوية='١٦٣٥٣' رقم="٢">ضَرَبَ زَيْدٌ عَمْرًا</قول></مقطع>
  <مقطع هوية='٩٥٠٢٩' رقم="٩">حَيْثُ كَاْنَ <حرف>زَيْدٌ</حرف> أَوَّلَ مَا تَشْغَلُ بِهِ الْفِعْلَ</مقطع>
  <مقطع هوية='٢٨٧٣٠' رقم="١٠">وَكَذَلِكَ هَذَا إِذَا كَاْنَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية='٦٢٩٣٢' رقم="١١">وَإِنْ قَدَّمْتَ الاِسْمَ فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='٨٧٤٩٦' رقم="١٢">كَمَا كَاْنَ ذَلِكَ عَرَبِيًّا جَيِّدًا</مقطع>
  <مقطع هوية='٦٠٣٣٥' رقم="١٣">وَذَلِكَ قَوْلُكَ <قول هوية='٧٩٥٥١' رقم="٣">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية='٩٤٧٧١' رقم="١٤">وَالِاهْتِمَاْمُ وَالْعِنَاْيَةُ هُنَا فَِي التَّقْدِيْمِ وَالتَّأْخِيْرِ سَوَاْءٌ</مقطع>
  <مقطع هوية='٥٤١٠٨' رقم="١٥">مِثْلُهُ فِي <قول هوية='٤٤٢٢٩' رقم="٤">ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٣٢٤١٥' رقم="١٦">وَ<قول هوية='٩٧٧٧٦' رقم="٥">ضَرَبَ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٦١٧٣٩' رقم="١٧">فَإِذَا بَنَيْتَ الْفِعْلَ عَلَى الِاسْمِ قُلْتَ <قول هوية='٤٣٤٦٨' رقم="٦">زَيْدٌ ضَرَبْتُهُ</قول></مقطع>
  <مقطع هوية='١١٣٠٢' رقم="١٨">فَلَزِمَتْهُ الْهَاْءُ</مقطع>
  <مقطع هوية='٨٣٨٣٣' رقم="١٩">وَإِنَّمَا تُرِيْدُ بِقَوْلِكَ <قبس>مَبْنِيٌّ عَلَيْهِ الْفِعْلُ</قبس></مقطع>
  <مقطع هوية='٩٧٥٧٢' رقم="٢٠">أَنَّهُ فِي مَوْضِعِ <حرف>مُنْطَلِقٍ</حرف>
  </مقطع>
  <مقطع هوية='١٣١١٧' رقم="٢١">إِذَا قُلْتَ <قول هوية='٢٩٨٥٩' رقم="٧">عَبْدُ اللهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٢٥٧٢٦' رقم="٢٢">فَهُوَ فِي مَوْضِعِ هَذَا الَّذِي بُنِيَ عَلَى الْأَوَّلِ وَاْرْتَفَعَ بِهِ</مقطع>
  <مقطع هوية='٦١٦٨١' رقم="٢٣">فَإِنَّمَا قُلْتَ <حرف>عَبْدُ اللهِ</حرف>
  </مقطع>
  <مقطع هوية='٠٢١٩٨' رقم="٢٤">فَنَسَبْتَهُ لَهُ</مقطع>
  <مقطع هوية='٢٠٦٢٧' رقم="٢٥">ثُمَّ بَنَيْتَ عَلَيْهِ الْفِعْلَ</مقطع>
  <مقطع هوية='٦٦٠٨٤' رقم="٢٦">وَرَفَعْتَهُ بِالْاْبْتِدَاْءِ</مقطع>
  <مقطع هوية='٤٢٤٧٢' رقم="٢٧">وَمِثْلُ ذَلِكَ قَوْلُهُ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع هوية='٥٦٧٧٧' رقم="٢٨">
    <آية هوية='٣٢٨٢٧' سورة="٤١" آية="١٧">وَأَمَّا ثَمُوْدُ فَهَدَيْنَاْهُمْ</آية></مقطع>
  <مقطع هوية='٦٨١٥٧' رقم="٢٩">وَإِنَّمَا حَسُنَ أَنْ يُبْنَى الْفِعْلُ عَلَى الاِسْمِ</مقطع>
  <مقطع هوية='٣٤٢٧٦' رقم="٣٠">حَيْثُ كَاْنَ مُعْمَلًا فِي الْمُضْمَرِ وَشَغَلْتَهُ بِهِ</مقطع>
  <مقطع هوية='٤٥١٥٠' رقم="٣١">وَلَوْلَا ذَلِكَ لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية='٣٣٥٢١' رقم="٣٢">لِأَنَّكَ لَمْ تَشْغَلْهُ بِشَيْءٍ</مقطع>
  <مقطع هوية='٣١٧٠١' رقم="٣٣">وَإِنْ شِئْتَ قُلْتَ <قول هوية='٧٤٥٨٤' رقم="٨">زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٣٤١٩' رقم="٣٤">وَإِنَّمَا نَصَبَهُ عَلَى إِضْمَاْرِ فِعْلٍ هَذَا يُفَسِّرُهُ</مقطع>
  <مقطع هوية='٩٢٤٦٦' رقم="٣٥">كَأَنَّكَ قُلْتَ <قول هوية='٦١٤٩٢' رقم="٩">ضَرَبْتُ زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٤٠٦٤٦' رقم="٣٦">إِلَّا أَنَّهُمْ لَا يُظْهِرُوْنَ هَذَا الْفِعْلَ هُنَا</مقطع>
  <مقطع هوية='٨٤٥٩٩' رقم="٣٧">لِلِاسْتِغْنَاْءِ بِتَفْسِيْرِهِ</مقطع>
  <مقطع هوية='٨١٤٢٩' رقم="٣٨">فَالِٱسْمُ هَاهُنَا مَبْنِيٌّ عَلَى هَذَا الْمُضْمَرِ</مقطع>
  <مقطع هوية='٦١٦١٩' رقم="٣٩">وَمِثْلُ تَرْكِ إِظْهَاْرِ الْفِعْلِ هٰهُنَا</مقطع>
  <مقطع هوية='٧٨٨٤١' رقم="٤٠">تَرْكُ الْإِظْهَاْرِ فِي الْمَوْضِعِ الَّذِي تَقَدَّمَ فِيْهِ الْإِضْمَاْرُ</مقطع>
  <مقطع هوية='٧٥٨١٨' رقم="٤١">وَسَتَرَاْهُ إِنْ شَاْءَ اللَّهُ</مقطع>
  <مقطع هوية='٧٢٣٣٤' رقم="٤٢">وَقَدْ قَرَأَ بَعْضُهُمْ</مقطع>
  <مقطع هوية='١٨٨٨٧' رقم="٤٣">
    <آية هوية='٥١١٦٥' سورة="٤١" آية="١٧">وَأَمَّا ثَمُوْدَ فَهَدَيْنَاْهُمْ</آية></مقطع>
  <مقطع هوية='٠٨٥١٩' رقم="٤٤">وَأَنْشَدُوْا هَذَا الْبَيْتَ عَلَى وَجْهَيْنِ</مقطع>
  <مقطع هوية='٧٥٦٦٧' رقم="٤٥">عَلَى النَّصْبِ وَالرَّفْعِ</مقطع>
  <مقطع هوية='٩١٢٩٦' رقم="٤٦">قَالَ بِشْرُ بْنُ أَبِىْ خَاْزِمٍ</مقطع>
  <شاهدة هوية='٤٦٧١٣' مقطع="٤٧" رقم="١">
    <بيت>
      <مصراع>فَأَمَّا تَمِيْمٌ تَمِيْمُ بْنُ مُرٍّ</مصراع>
      <مصراع>فَأَلْفَاْهُمُ الْقَوْمُ رَوْبَى نِيَاْمَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٧٤٩٤' رقم="٤٨">وَمِنْهُ قَوْلُ ذِىْ الْرُّمَّةِ</مقطع>
  <شاهدة هوية='٩٨٧٢٩' مقطع="٤٩" رقم="٢">
    <بيت>
      <مصراع>إِذَا ابْنُ أَبِي مُوْسَى بِلَاْلٌ بَلَغْتِهِ</مصراع>
      <مصراع>فَقَاْمَ بِفَأْسٍ بَيْنَ وُصْلَيْكِ جَاْزِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٢٩١٨' رقم="٥٠">فَالنَّصْبُ عَرَبِيٌّ كَثِيْرٌ</مقطع>
  <مقطع هوية='٨٣٨٥١' رقم="٥١">وَالرَّفْعُ أَجْوَدُ</مقطع>
  <مقطع هوية='١١٥١٦' رقم="٥٢">لِأَنَّهُ إِذَا أَرَاْدَ الْإِعْمَاْلَ</مقطع>
  <مقطع هوية='٦١٣٣٦' رقم="٥٣">فَأَقْرَبُ إِلَى ذَلِكَ</مقطع>
  <مقطع هوية='٠٢٨٣٥' رقم="٥٤">أَنْ يَقُوْلَ <قول هوية='٧٨٩٧٠' رقم="١٠">ضَرَبْتُ زَيْدًا</قول> وَ<قول هوية='٠٠٣٧٠' رقم="١١">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية='٤٦٩٨٠' رقم="٥٥">وَلَا يُعْمِلُ الْفِعْلَ فِي مُضْمَرٍ</مقطع>
  <مقطع هوية='١٧٧٢٨' رقم="٥٦">وَلَا يُتَنَاوَلُ بِهِ هَذَا الْمُتَنَاوَلَ الْبَعِيْدَ</مقطع>
  <مقطع هوية='٠٢٣٨٨' رقم="٥٧">وَكُلُّ هَذَا مِنْ كَلَامِهِمْ</مقطع>
  <رأس هو="٠">
    <عنوان>الْمَفْعُوْلُ الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ</عنوان>
  </رأس>
  <مقطع هوية='١٤٣١٠' رقم="٥٨">وَمِثْلُ هَذَا <قول هوية='٤٩١٨٢' رقم="١٢">زَيْدًا أُعْطِيْتُ</قول>
  </مقطع>
  <مقطع هوية='٨٠٢٥٠' رقم="٥٩">وَ<قول هوية='٩٦٨٣٨' رقم="١٣">أُعْطِيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٦٥٤١٢' رقم="٦٠">وَ<قول هوية='٣٧٨٨٥' رقم="١٤">زَيْدٌ أُعْطِيْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٩٧٦٠٦' رقم="٦١">لِأَنَّ <حرف>أُعْطِيْتُ</حرف> بِمَنْزِلَةِ <حرف>ضُرِبْتُ</حرف>
  </مقطع>
  <مقطع هوية='٠٦٩٣٧' رقم="٦٢">وَقَدْ بُيِّنَ الْمَفْعُوْلُ الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ فَِي أَوَّلِ الْكِتَاْبِ</مقطع>
  <رأس هو="٠">
    <عنوان>الْفِعْلُ الْمُتعَدّي وغَيْرُ الْمُتعَدّي</عنوان>
  </رأس>
  <مقطع هوية='٧٩٣٦٠' رقم="٦٣">فَإِنْ قُلْتَ <قول هوية='٧٦٧٢٣' رقم="١٥">زَيْدٌ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٩٦٥٨٠' رقم="٦٤">فَهُوَ مِنَ النَّصْبِ أَبْعَدُ مِنْ ذٰلِكَ</مقطع>
  <مقطع هوية='٧٣٤٦٠' رقم="٦٥">لِأَنَّ الْمُضْمَرَ قَدْ خَرَجَ مِنْ الْفِعْلِ</مقطع>
  <مقطع هوية='٥٩٧١٩' رقم="٦٦">وَأُضِيْفَ الْفِعْلُ إِلَيْهِ بِالْبَاْءِ</مقطع>
  <مقطع هوية='٧٧٨٢١' رقم="٦٧">وَلَمْ يُوْصَلْ إِلَيْهِ الْفِعْلُ فِي اللَّفْظِ</مقطع>
  <مقطع هوية='١٩٢٣٢' رقم="٦٨">فَصَاْرَ كَقَوْلِكَ <قول هوية='٩٥٩٧٢' رقم="١٦">زَيْدٌ لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٩٦٦٠٠' رقم="٦٩">وَإِنْ شِئْتَ قُلْتَ <قول هوية='١٣٤٢٥' رقم="١٧">زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='١٥٩٤٣' رقم="٧٠">تُرِيْدُ أَنْ تُفَسِّرَ بِهِ مُضْمَرًا</مقطع>
  <مقطع هوية='٥٩٤٣٣' رقم="٧١">كَأَنَّكَ قُلْتَ إِذَا مَثَّلْتَ ذَلِكَ</مقطع>
  <مقطع هوية='٢٣٣٥٩' رقم="٧٢">
    <قول هوية='٩٣٥٢٠' رقم="١٨">جَعَلْتُ زَيْدًا عَلَى طَرِيْقِي مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٦٢٠٣١' رقم="٧٣">وَلَكِنَّكَ لَا تُظْهِرُ هَذَا الْأَوَّلَ لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٨٩٧٣٥' رقم="٧٤">وَإِذَا قُلْتَ <قول هوية='٩٣٦٧٤' رقم="١٩">زَيْدٌ لَقِيْتُ أَخَاْهُ</قول> فَهُوَ كَذَلِكَ</مقطع>
  <مقطع هوية='٥٣٣٦٢' رقم="٧٥">وَإِنْ شِئْتَ نَصَبْتَ</مقطع>
  <مقطع هوية='١٩٨٤٨' رقم="٧٦">لِأَنَّهُ إِذَا وَقَعَ عَلَى شَيْءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع هوية='٧١٣٥٩' رقم="٧٧">فَكَأَنَّهُ قَدْ وَقَعَ بِهِ</مقطع>
  <مقطع هوية='٨٠٥٦٣' رقم="٧٨">وَالدَّلِيلُ عَلَى ذَلِكَ أَنَّ الرَّجُلَ يَقُوْلُ</مقطع>
  <مقطع هوية='٩٦٧١٦' رقم="٧٩">
    <قول هوية='٦٣٧٥٢' رقم="٢٠">أَهَنْتَ زَيْدًا بِإِهَاْنَتِكِ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٨٧٧٩٢' رقم="٨٠">وَ<قول هوية='٧٤٨٥٤' رقم="٢١">أَكْرَمْتَهُ بِإِكْرَاْمِكَ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٩٢٧٨٨' رقم="٨١">وَهَذَا النَّحْوُ فِي الْكَلَاْمِ كَثِيْرٌ</مقطع>
  <مقطع هوية='٤٠١١١' رقم="٨٢">يَقُوْلُ الرَّجُلُ <قول هوية='٩١٨٩٣' رقم="٢٢">إِنَّمَا أَعْطَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠٥٢٧٥' رقم="٨٣">وَإِنَّمَا يُرِيْدُ <قول هوية='٥٧٦٥٦' رقم="٢٣">لِمَكَاْنِ زَيْدٍ أَعْطَيْتُ فُلَاْنًا</قول>
  </مقطع>
  <مقطع هوية='٣٦٦٧٨' رقم="٨٤">وَإِذَا نَصَبْتَ <قول هوية='٩٨٠٢٨' رقم="٢٤">زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٦٤٧٠٣' رقم="٨٥">فَكَأَنَّهُ قَاْلَ <قول هوية='٨٢٤٠٧' رقم="٢٥">لَاْبَسْتُ زَيْدًا لَقِيْتُ أَخَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٨٨٦٨٥' رقم="٨٦">وَهَذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية='٣٩١٦٦' رقم="٨٧">فَجَرَى هَذَا عَلَى مَا جَرَى عَلَيْهِ قَوْلُكَ <قول هوية='٦٩٠٤٦' رقم="٢٦">أَكْرَمْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٩٨٤٧٠' رقم="٨٨">وَإِنَّمَا وَصَلَتْ الْأَثْرَةُ إِلَى غَيْرِهِ</مقطع>
  <مقطع هوية='٣٢٣١٤' رقم="٨٩">وَالرَّفْعُ فِي هَذَا أَحْسَنُ وَأَجْوَدُ</مقطع>
  <مقطع هوية='٢٧٣١٧' رقم="٩٠">لِأَنَّ أَقْرَبَ إِلَى ذَلِكَ أَنْ تَقُوْلَ</مقطع>
  <مقطع هوية='٥٥٥٢٠' رقم="٩١">
    <قول هوية='٣٣٩٠٦' رقم="٢٧">مَرَرْتُ بِزَيْدٍ وَلَقِيْتُ أَخَا عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٥٥٥٨٠' رقم="٩٢">وَمِثْلُ هَذَا فِي الْبِنَاْءِ عَلَى الْفِعْلِ وَبِنَاْءُ الْفِعْلِ عَلَيْهِ <حرف>أَيُّهُمْ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٦٤٧' رقم="٩٣">وَذٰلِكَ قَوْلُهُمْ <قول هوية='٠٦٧٣٣' رقم="٢٨">أَيَّهُمْ تَرَ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية='٧٨٤٦٦' رقم="٩٤">وَ<قول هوية='٠٤٣٥٠' رقم="٢٩">أَيُّهُمْ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٨٦٢' رقم="٩٥">وَالنَّصْبُ عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٩٣٣٦٧' رقم="٩٦">لِأَنَّهُ كَأَنَّهُ قَاْلَ <قول هوية='٣٢٦٢٣' رقم="٣٠">أَيَّهُمْ تَرَ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع هوية='٧٢٣٥٧' رقم="٩٧">فَهُوَ مِثْلُ <حرف>زَيْدٍ</حرف> فِي هَذَا الْبَاْبِ</مقطع>
  <مقطع هوية='٨٤١٥٠' رقم="٩٨">وَقَدْ يُفَاْرِقُهُ فِي أَشْيَاْءَ كَثِيْرَةٍ</مقطع>
  <مقطع هوية='٤٦٠٤٦' رقم="٩٩">سَتُبَيَّنُ إِنِ شَاْءَ اللَّهُ</مقطع>
