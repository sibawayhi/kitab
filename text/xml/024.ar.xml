     يعقوب="١-١٣٣"
     رقم="٢٤">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يَكُونُ فِيْهِ الاِسْمُ مَبْنِيًّا عَلَى الْفِعْلِ</مقطع>
    <مقطع رقم="٢">قُدِّمَ أَوْ أُخِّرَ</مقطع>
    <مقطع رقم="٣">وَمَا يَكُوْنُ فِيْهِ الْفِعْلُ مَبْنِيًّا عَلَى الْاِسْمِ</مقطع>
  </عنوان>
  <مقطع رقم="٤">فَإِذَا بَنَيْتَ الْٱسْمَ عَلَيْهِ قُلْتَ</مقطع>
  <مقطع رقم="٥">
    <قول رقم="١">ضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٦">وَهُوَ الْحَدُّ</مقطع>
  <مقطع رقم="٧">لِأَنَّكَ تُرِيْدُ أَنْ تُعْمِلَهُ</مقطع>
  <مقطع رقم="٨">وَتَحْمِلَ عَلَيْهِ الِاسْمَ</مقطع>
  <مقطع رقم="٩">كَمَا كَانَ الْحَدُّ</مقطع>
  <مقطع رقم="١٠">
    <قول رقم="٢">ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="١١">حَيْثُ كَانَ <حرف>زَيْدٌ</حرف> أَوَّلَ مَا تَشْغَلُ بِهِ الْفِعْلَ</مقطع>
  <مقطع رقم="١٢">وَكَذَلِكَ هَذَا إِذَا كَانَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="١٣">وَإِنْ قَدَّمْتَ الاِسْمَ فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع رقم="١٤">كَمَا كَانَ ذَلِكَ عَرَبِيًّا جَيِّدًا</مقطع>
  <مقطع رقم="١٥">وَذَلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="١٦">
    <قول رقم="٣">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَالِاهْتِمَامُ <هارون مجلد="١" صفحة="٨٠"/>وَالْعِنَايَةُ هُنَا</مقطع>
  <مقطع رقم="١٨">فَِي التَّقْدِيْمِ وَالتَّأْخِيْرِ</مقطع>
  <مقطع رقم="١٩">سَوَاْءٌ</مقطع>
  <مقطع رقم="٢٠">مِثْلُهُ فِي <قول رقم="٤">ضَرَبَ زَيْدٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٢١">وَ<قول رقم="٥">ضَرَبَ عَمْرًا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٢٢">فَإِذَا بَنَيْتَ الْفِعْلَ عَلَى الْٱسْمِ قُلْتَ</مقطع>
  <مقطع رقم="٢٣">
    <قول رقم="٦">زَيْدٌ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٢٤">فَلَزِمَتْهُ الْهَاْءُ</مقطع>
  <مقطع رقم="٢٥">وَإِنَّمَا تُرِيْدُ بِقَوْلِكَ <حرف>مَبْنِيٌّ عَلَيْهِ الْفِعْلُ</حرف>
  </مقطع>
  <مقطع رقم="٢٦">أَنَّهُ فِي مَوْضِعِ <حرف>مُنْطَلِقٌ</حرف>
  </مقطع>
  <مقطع رقم="٢٧">إِذَا قُلْتَ <قول رقم="٧">عَبْدُ اللَّهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٢٨">فَهُوَ فِي مَوْضِعِ هَذَا</مقطع>
  <مقطع رقم="٢٩">الَّذِي بُنِيَ عَلَى الْأَوَّلِ</مقطع>
  <مقطع رقم="٣٠">وَاْرْتَفَعَ بِهِ</مقطع>
  <مقطع رقم="٣١">فَإِنَّمَا قُلْتَ <حرف>عَبْدُ اللَّهِ</حرف>
  </مقطع>
  <مقطع رقم="٣٢">فَنَسَبْتَهُ لَهُ</مقطع>
  <مقطع رقم="٣٣">ثُمَّ بَنَيْتَ عَلَيْهِ الْفِعْلَ</مقطع>
  <مقطع رقم="٣٤">وَرَفَعْتَهُ بِالْاْبْتِدَاْءِ</مقطع>
  <مقطع رقم="٣٥">وَمِثْلُ ذَلِكَ قَوْلُهُ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع رقم="٣٦">
    <آية>وَأَمَّا ثَمُوْدُ فَهَدَيْنَاهُمْ</آية>
  </مقطع>
  <مقطع رقم="٣٧">وَإِنَّمَا حَسُنَ أَنْ يُبْنَى الْفِعْلُ عَلَى الاِسْمِ</مقطع>
  <مقطع رقم="٣٨">حَيْثُ كَانَ مُعْمَلًا فِي الْمُضْمَرِ</مقطع>
  <مقطع رقم="٣٩">وَشَغَلْتَهُ بِهِ</مقطع>
  <مقطع رقم="٤٠">وَلَوْلَا ذَلِكَ لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٤١">لِأَنَّكَ لَمْ تَشْغَلْهُ بِشَيْءٍ</مقطع>
  <مقطع رقم="٤٢">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٨">زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٤٣">وَإِنَّمَا نَصَبَهُ عَلَى إِضْمَاْرِ فِعْلٍ</مقطع>
  <مقطع رقم="٤٤">هَذَا يُفَسِّرُهُ</مقطع>
  <مقطع رقم="٤٥">كَأَنَّكَ قُلْتَ <قول رقم="٩">ضَرَبْتُ زَيْدًا ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٤٦">إِلَّا أَنَّهُمْ لَا يُظْهِرُوْنَ هَذَا الْفِعْلَ هُنَا</مقطع>
  <مقطع رقم="٤٧">لِلْاْسْتِغْنَاْءِ بِتَفْسِيْرِهِ</مقطع>
  <مقطع رقم="٤٨">فَالِٱسْمُ هَاهُنَا مَبْنِيٌّ عَلَى هَذَا الْمُضْمَرِ</مقطع>
  <مقطع رقم="٤٩">وَمِثْلُ تَرْكِ إِظْهَاْرِ الْفِعْلِ هَاهُنَا</مقطع>
  <مقطع رقم="٥٠">تَرْكُ الْإِظْهَاْرِ فِي الْمَوْضِعِ</مقطع>
  <مقطع رقم="٥١">الَّذِي تَقَدَّمَ فِيْهِ الْإِضْمَاْرُ</مقطع>
  <مقطع رقم="٥٢">وَسَتَرَاهُ إِنِ شَاْءَ اللَّهُ</مقطع>
  <هارون مجلد="١" صفحة="٨١"/>
  <مقطع رقم="٥٣">وَقَدْ قَرَأَ بَعْضُهُمْ</مقطع>
  <مقطع رقم="٥٤">
    <آية>وَأَمَّا ثَمُوْدُ فَهَدَيْنَاهُمْ</آية>
  </مقطع>
  <مقطع رقم="٥٥">وَأَنْشَدُوا هَذَا الْبَيْتَ عَلَى وَجْهَيْنِ</مقطع>
  <مقطع رقم="٥٦">عَلَى النَّصْبِ وَالرَّفْعِ</مقطع>
  <مقطع رقم="٥٧">قَالَ بِشْرُ بْنُ أَبِىْ خَاْزِمٍ</مقطع>
  <شاهدة رقم="١" xml:id="٢٤-١">
    <بيت>
      <مصراع>فَأَمَّا تَمِيْمٌ تَمِيْمُ بِنُ مُرٍّ</مصراع>
      <مصراع>فَأَلْفَاهُمُ الْقَوْمُ رَوْبَى نِيَامَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٨">وَمِنْهُ قَوْلُ ذِىْ الْرُّمَّةِ</مقطع>
  <شاهدة رقم="٢" xml:id="٢٤-٢">
    <بيت>
      <مصراع>إِذَا ابْنُ أَبِيْ مُوْسَىْ بِلَالٌ بَلُغَتِهُ</مصراع>
      <مصراع>فَقَامَ بِفَأسَ بَيْنَ وَْصلّيكِ جَاْزِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٩">فَالنَّصْبُ عَرَبِيٌّ كَثِيْرٌ</مقطع>
  <مقطع رقم="٦٠">وَالرَّفْعُ أَجْوَدُ</مقطع>
  <مقطع رقم="٦١">لِأَنَّهُ إِذَا أَرَاْدَ الْإِعْمَالَ</مقطع>
  <مقطع رقم="٦٢">فَأَقْرَبُ <هارون مجلد="١" صفحة="٨٢"/>إِلَى ذَلِكَ</مقطع>
  <مقطع رقم="٦٣">أَنْ يَقُوْلَ <قول رقم="١٠">ضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٦٤">وَ<قول رقم="١١">زَيْدًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع رقم="٦٥">وَلَا يُعْمِلُ الْفِعْلَ فِي مُضْمَرٍ</مقطع>
  <مقطع رقم="٦٦">وَلَا يَتَنَاوَلُ بِهِ هَذَا الْمُتَنَاوَلَ الْبَعِيْدَ</مقطع>
  <مقطع رقم="٦٧">وُكُلُّ هَذَا مِنْ كَلَامِهِمْ</مقطع>
  <مقطع رقم="٦٨">وَمِثْلُ هَذَا <قول رقم="١٢">زَيْدًا أُعْطِيْتُ</قول>
  </مقطع>
  <مقطع رقم="٦٩">وَ<قول رقم="١٣">أُعْطِيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٧٠">وَ<قول رقم="١٤">زَيْدٌ أُعْطِيْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٧١">لِأَنَّ <حرف>أُعْطِيْتُ</حرف> بِمَنْزِلَةِ <حرف>ضُرِبْتُ</حرف>
  </مقطع>
  <مقطع رقم="٧٢">وَقَدْ بُيِّنَ الْمَفْعُوْلُ</مقطع>
  <مقطع رقم="٧٣">الَّذِي هُوَ بِمَنْزِلَةِ الْفَاْعِلِ</مقطع>
  <مقطع رقم="٧٤">فَِي أَوَّلِ الْكِتَاْبِ</مقطع>
  <مقطع رقم="٧٥">فَإِنْ قُلْتَ <قول رقم="١٥">زَيْدٌ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٧٦">فَهُوَ مِنَ النَّصْبِ أَبَعدُ مِنْ ذَلِكَ</مقطع>
  <مقطع رقم="٧٧">لِأَنَّ الْمُضْمَرَ قَدْ خَرَجَ مِنْ الْفِعْلِ</مقطع>
  <مقطع رقم="٧٨">وَأُضِيْفَ الْفِعْلُ إِلَيْهِ بِالْبَاْءِ</مقطع>
  <مقطع رقم="٧٩">وَلَمْ يُوْصَلْ إِلَيْهِ الْفِعْلُ فِي اللَّفْظِ</مقطع>
  <مقطع رقم="٨٠">فَصَاْرَ كَقَوْلِكَ</مقطع>
  <مقطع رقم="٨١">
    <قول رقم="١٦">زَيْدٌ لَقِيْتُ أَخَاهُ</قول>
  </مقطع>
  <مقطع رقم="٨٢">وَإِنْ شِئْتَ قُلْتَ</مقطع>
  <مقطع رقم="٨٣">
    <قول رقم="١٧">زَيْدًا مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٨٤">تُرِيْدُ أَنْ تُفَسِّرَ بِهِ مُضْمَرًا</مقطع>
  <مقطع رقم="٨٥">كَأَنَّكَ قُلْتَ إِذَا مَثَّلْتَ ذَلِكَ</مقطع>
  <مقطع رقم="٨٦">
    <قول رقم="١٨">جَعَلْتُ زَيْدًا عَلَى طَرِيْقِي مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَلَكِنَّكَ لَا تُظْهِرُ هَذَا الْأَوَّلَ</مقطع>
  <مقطع رقم="٨٨">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٨٩">وَإِذَا قُلْتَ <قول رقم="١٩">زَيْدٌ لَقِيْتُ أَخَاهُ</قول>
  </مقطع>
  <مقطع رقم="٩٠">فَهُوَ كَذَلِكَ</مقطع>
  <مقطع رقم="٩١">وَإِنْ شِئْتَ نَصَبْتَ</مقطع>
  <مقطع رقم="٩٢">لِأَنَّهُ إِذَا وَقَعَ عَلَى شَيْءٍ مِنَ سَبَبِهِ</مقطع>
  <مقطع رقم="٩٣">فَكَأَنَّهُ قَدْ وَقَعَ بِهِ</مقطع>
  <مقطع رقم="٩٤">وَالدَّلِيلُ عَلَى ذَلِكَ</مقطع>
  <مقطع رقم="٩٥">أَنَّ الرَّجُلَ يَقُوْلُ</مقطع>
  <مقطع رقم="٩٦">
    <قول رقم="٢٠">أَهَنْتَ زَيْدًا بِإِهَانَتِكِ أَخَاهُ</قول>
  </مقطع>
  <مقطع رقم="٩٧">وَ<قول رقم="٢١">أَكْرَمْتَهُ بِإِكْرَامِكَ أَخَاهُ</قول>
  </مقطع>
  <مقطع رقم="٩٨">وَهَذَا النَّحْوُ فِي الْكَلَامِ كَثِيْرٌ</مقطع>
  <مقطع رقم="٩٩">يَقُوْلُ الرَّجُلُ إِنَّمَا</مقطع>
  <مقطع رقم="١٠٠">
    <قول رقم="٢٢">أَعْطَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٠١">وَإِنَّمَا يُرِيْدُ <قول رقم="٢٣">لِمَكَانِ زَيْدٍ أَعْطَيْتُ فُلَانًا</قول>
  </مقطع>
  <مقطع رقم="١٠٢">وَإِذَا نَصَبْتَ <قول رقم="٢٤">زَيْدًا لَقِيْتُ أَخَاهُ</قول>
  </مقطع>
  <مقطع رقم="١٠٣">فَكَأَنَّهُ قَالَ</مقطع>
  <مقطع رقم="١٠٤">
    <قول رقم="٢٥">لَابَسْتُ زَيْدًا لَقِيْتُ أَخَاهُ</قول>
  </مقطع>
  <مقطع رقم="١٠٥">وَهَذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع رقم="١٠٦">فَجَرَى هَذَا عَلَى مَا جَرَى عَلَيْهِ قَوْلُكَ</مقطع>
  <مقطع رقم="١٠٧">
    <قول رقم="٢٦">أَكْرَمْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٠٨">وَإِنَّمَا وَصَلَتْ الْأَثْرَةُ إِلَى غَيْرِهِ</مقطع>
  <هارون مجلد="١" صفحة="٨٣"/>
  <مقطع رقم="١٠٩">وَالرَّفْعُ فِي هَذَا أَحْسَنُ وَأَجْوَدُ</مقطع>
  <مقطع رقم="١١٠">لِأَنَّ أَقَرَبَ إِلَى ذَلِكَ</مقطع>
  <مقطع رقم="١١١">أَنْ تَقُوْلَ</مقطع>
  <مقطع رقم="١١٢">
    <قول رقم="٢٧">مَرَرْتُ بِزَيْدٍ وَلَقِيْتُ أَخَا عَمْرِوٍ</قول>
  </مقطع>
  <مقطع رقم="١١٣">وَمِثْلُ هَذَا فِي الْبِنَاْءِ عَلَى الْفِعْلِ</مقطع>
  <مقطع رقم="١١٤">وَبِنَاْءُ الْفِعْلِ عَلَيْهِ</مقطع>
  <مقطع رقم="١١٥">
    <حرف>أَيُّهُمْ</حرف>
  </مقطع>
  <مقطع رقم="١١٦">وَذَلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="١١٧">
    <قول رقم="٢٨">أَيَّهُمْ تَرَ يَأْتِكَ</قول>
  </مقطع>
  <مقطع رقم="١١٨">وَ<قول رقم="٢٩">أَيُّهُمْ تَرَهُ يَأْتِكَ</قول>
  </مقطع>
  <مقطع رقم="١١٩">وَالنَّصْبُ عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="١٢٠">لِأَنَّهُ كَأَنَّهُ قَالَ</مقطع>
  <مقطع رقم="١٢١">
    <قول رقم="٣٠">أَيَّهُمْ تَرَ تَرَهُ يَأْتِكَ</قول>
