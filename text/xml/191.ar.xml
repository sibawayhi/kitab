<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٦٦"
     درنبورج="١-٣٢١"
     البكاء="٣-٢٤٤"
     هارون="٢-٣٢٥"
     يعقوب="٢-٣٣٩"
     رقم="١٩١">

   <عنوان>
      <مقطع>هذا باب ما لا يكون إلا على معنى ولكن</مقطع>
   </عنوان>
   <مقطع>فمن ذلك قوله تعالى<آية>لا عاصم اليوم من أمر الله إلا من رحم</آية>أي ولكن من رحم</مقطع>
   <مقطع>وقوله عز وجل<آية>فلولا كانت قرية آمنت فنفعها إيمانها إلا قوم يونس لما آمنوا</آية>أي ولكن قوم يونس لما آمنوا</مقطع>
   <مقطع>وقوله عز وجل<آية>فلَوْلاَ كانَ مِنَ القُرُونِ مِنْ قَبْلِكُم أُولُوا بقِيَّةٍ يَنْهونَ عَنِ الفَسَادِ فِي الأَرْضِ إلاَّ قلِيلاً مِمَّنْ أَنْجَيْنَا مِنْهُمْ</آية>أي ولكن قليلا ممن أنجينا [ منهم ]</مقطع>
   <مقطع>وقوله عز وجل<آية>أخرجوا من ديارهم بغير حق إلا أن يقولوا ربنا الله</آية>أي ولكنهم يقولون ربنا الله</مقطع>
   <مقطع>وهذا الضرب في القرآن كثير<هارون مجلد="٢" صفحة="٣٢٥"/>ومن ذلك من الكلام لا تكونن من فلان في شئ إلا سلاما بسلام</مقطع>
   <مقطع>ومثل ذلك أيضا من الكلام فيما حدثنا أبو الخطاب ما زاد إلا ما نقص وما نفع إلا ما ضر</مقطع>
   <مقطع>فما مع الفعل بمنزلة اسم نحو النقصان والضرر</مقطع>
   <مقطع>كما أنك إذا قلت ما أحسن ما كلم زيدا فهو ما أحسن كلام زيدا</مقطع>
   <مقطع>ولولا ما لم يجز الفعل بعد إلا في [ ذا ] الموضع كما لا يجوز بعد ما أحسن بغير ما كأنه قال ولكنه ضر وقال ولكنه نقص</مقطع>
   <مقطع>هذا معناه</مقطع>
   <مقطع>ومثل ذلك من الشعر قول النابغة</مقطع><شاهدة>
         <بيت>
            <مصراع>ولا عَيْبَ فيهمْ غَيْرَ أنْ سيُوفَهم</مصراع>
            <مصراع>بهن فلولٌ من قِراعِ الكَتائِبِ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>أي ولكن سيوفهم بهن فلول</مقطع>
   <مقطع>وقال [ النابغة ] الجعدى<هارون مجلد="٢" صفحة="٣٢٦"/></مقطع><شاهدة>
         <بيت>
            <مصراع>فَتىً كَمُلتْ خَيْراتُه غيرَ أنه</مصراع>
            <مصراع>جَوَادٌ فلا يُبقِى من المالِ باقيِاَ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>كأنه قال ولكنه مع ذلك جواد</مقطع>
   <مقطع>ومثل ذلك قول الفرزدق</مقطع><شاهدة>
         <بيت>
            <مصراع>وما سَجَنوني غيرَ أنّي ابنُ غالبٍ</مصراع>
            <مصراع>وأنّى من الأثْرَيْنَ غيرِ الزَّعانِفِ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>كأنه قال ولكني ابن غالب</مقطع>
   <مقطع>ومثل ذلك في الشعر كثير</مقطع>
   <مقطع>ومثل ذلك قوله وهو قول بعض بني مازن يقال له عنز بن دجاجة<هارون مجلد="٢" صفحة="٣٢٧"/></مقطع><شاهدة>
         <بيت>
            <مصراع>من كانَ أَشْرَكَ في تفرُّقِ فالجٍ</مصراع>
            <مصراع>فلَبُونه جَرِبَتْ معاً وأغَدَّتِ</مصراع>
         </بيت>
         <بيت>
            <مصراع>إلاّ كَناشِرَةَ الذي ضَيَّعْتُم</مصراع>
            <مصراع>كالغُصْن في غُلَوائه المتنبَِّتِ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>كأنه قال ولكن هذا كناشرة</مقطع>
   <مقطع>وقال</مقطع><شاهدة>
         <بيت>
            <مصراع>لولا ابنُ حارِثَة الأميرُ لقد</مصراع>
            <مصراع>أغْضَيْتَ من شَتْمى على رَغْمِ</مصراع>
         </بيت>
      <هارون مجلد="٢" صفحة="٣٢٨"/>
         <بيت>
            <مصراع>إلاّ كمُعْرِضٍ المحسِّرِ بَكْرَه</مصراع>
            <مصراع>عَمْداً يسِّبُبنى على الظُّلْم</مصراع>
         </بيت>
      </شاهدة>

</باب>
