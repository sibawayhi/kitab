  <عنوان>
    <مقطع هوية='٧٠٤٩٠'>هٰذَا بَاْبُ مُا يُضْمَرُ فِيْهِ الْفِعْلُ الْمُسْتَعْمَلُ إِظْهَاْرُهُ فِي غَيْرِ الْأَمْرِ وَالنَّهْيِ</مقطع>
  </عنوان>
  <مقطع هوية='٨١٢٣٢'>وَذٰلِكَ قَوْلُكَ إِذَا رَأَيْتَ رَجُلًا مُتَوَجِّهًا وَِجْهَةَ الْحَاْجِّ قَاْصِدًا فِي هَيْئَةِ الْحَاْجِّ فَقُلْتَ</مقطع>
  <مقطع هوية='٥٠٥٧٥'>
    <قول هوية='٩٨١٩١'>مَكَّةَ وَرَبَّ الْكَعْبَةِ</قول>
  </مقطع>
  <مقطع هوية='١١٢٩٤'>حَيْثُ زَكِنْتَ أَنَّهُ يُرِيْدُ مَكَّةَ</مقطع>
  <مقطع هوية='٩٣١٨٥'>كَاْنَّكَ قُلْتَ  <قول هوية='٩٤٢٢٨'>يُرِيْدُ مَكَّةَ وَاللهِ</قول>
  </مقطع>
  <مقطع هوية='١٦٦٧٧'>وَيَجُوْزُ أَنْ تَقُوْلَ  <قول هوية='٩٧٤٢١'>مَكَّةَ وَاللهِ</قول>
  </مقطع>
  <مقطع هوية='٥٦٩٥٧'>عَلَى قَوْلِكَ  <قول هوية='٦٦٥٨٥'>أَرَاْدَ مَكَّةَ وَاللهِ</قول>
  </مقطع>
  <مقطع هوية='٦٣٤٣٦'>كَأَنَّكَ أَخْبَرْتَ بِهَذِهِ الصَّفِّةِ عَنْهُ أَنَّهُ كَاْنَ فِيْهَا أَمْسِ</مقطع>
  <مقطع هوية='٧٥٨٦٢'>فَقُلْتَ  <قول هوية='٣٣٥٦١'>مَكَّةَ وَاللهِ</قول> أَيْ  <قول هوية='٥٦٨٦٤'>أَرَاْدَ مَكَّةَ إِذْ ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٨٢١٤٩'>وَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ  <آية هوية='١٧٨٨١'>بَلْ مِلَّةَ إِبْرَاْهِيْمَ حَنِيْفًا</آية>
  </مقطع>
  <مقطع هوية='٤٩٩٩٠'>أَيْ  <قول هوية='٦٨٩٠٣'>بَلْ نَتَّبِعُ مِلَّةَ إِبْرَاْهِيْمَ حَنِيْفًا</قول>
  </مقطع>
  <مقطع هوية='٧٩٠٠٥'>كَأَنَّهُ قِيْلَ لَهُمُ  <قول هوية='٨١٨٦٦'>اْتَّبِعُوْا</قول> حِيْنَ قِيْلَ لَهُمْ  <قول هوية='٧٧٨٢٤'>كُوْنُوْا هُوْدًا أَوْ نَصَاْرَىْ</قول>
  </مقطع>
  <مقطع هوية='٩٩١٩٣'>أَوْ رَأَيْتَ رَجُلًا يُسَدِّدُ سَهْمًا قِبَلَ الْقِرْطَاْسِ فَقُلْتَ</مقطع>
  <مقطع هوية='٦٤١٥٣'>
    <قول هوية='٩٩٨٦٦'>اْلْقِرْطَاْسَ وَاللهِ</قول>
  </مقطع>
  <مقطع هوية='٦٢٥٢٨'>أَيْ  <قول هوية='٩٧١٩٦'>يُصِيْبُ الْقِرْطَاْسَ</قول>
  </مقطع>
  <مقطع هوية='٨٩٩٣١'>وَإِذَا سَمِعْتَ وَقْعَ السَّهْمِ فِي الْقِرْطَاْسِ قُلْتَ</مقطع>
  <مقطع هوية='٧٨١١٧'>
    <قول هوية='٧٦٨٦١'>اْلْقِرْطَاْسَ وَاللهِ</قول> أَيْ  <قول هوية='٥٠٨١٧'>أَصَاْبَ الْقِرْطَاْسَ</قول>
  </مقطع>
  <مقطع هوية='٥٧٩٦٤'>وَلَوْ رَأَيْتَ نَاْسًا يَنْظُرُوْنَ الْهِلَاْلَ وَأَنْتَ مِنْهُمْ بَعِيْدٌ فَكَبَّرُوْا لَقُلْتَ</مقطع>
  <مقطع هوية='٤٢٧٨٤'>
    <قول هوية='٥٦٦٩١'>اْلْهِلَاْلَ وَرَبِّ الْكَعْبَةِ</قول> أَيْ  <قول هوية='٤٦١٧٦'>أَبْصَرُوْا الْهِلَاْلَ</قول>
  </مقطع>
  <مقطع هوية='٩٧٣٠٣'>أَوْ رَأَيْتَ ضَرْبًا فَقُلْتَ عَلَى وَجْهِ التَّفَاْؤُلِ</مقطع>
  <مقطع هوية='٨٤٠٤٣'>
    <قول هوية='٢٢٦٤٩'>عَبْدَ اللهِ</قول> أَيْ  <قول هوية='٣٠٠٨٧'>يَقَعُ بِعَبْدِ اللهِ</قول> أَوْ  <قول هوية='٤٦٦١٥'>بِعَبْدِ اللهِ يَكُوْنُ</قول>
  </مقطع>
  <مقطع هوية='٢٨٩٢٢'>وَمِثْلُ ذٰلِكَ أَنْ تَرَى رَجُلًا يُرِيْدُ أَنْ يُوْقِعَ فِعْلًا</مقطع>
  <مقطع هوية='٦٧٦١٤'>أَوْ رَأَيْتَهُ فِي حَاْلِ رَجُلٍ قَدْ أَوْقَعَ فِعْلًا</مقطع>
  <مقطع هوية='٦٥٨٩٦'>أَوْ أُخْبِرْتَ عَنْهُ بِفِعْلٍ فَتَقُوْلُ  <قول هوية='٧٤٧٤٨'>زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٣٦١٤٤'>تُرِيْدُ  <قول هوية='١١٢١٦'>ٱضْرِبْ زَيْدًا</قول> أَوْ  <قول هوية='٥٣٦٦٧'>أَتَضْرِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠٣٠٣١'>وَمِنْهُ أَنْ تَرَى الرَّجُلَ أَوْ تُخْبَرَ عَنْهُ أَنَّهُ قَدْ أَتَى أَمْرًا قَدْ فَعَلَهُ فَتَقُوْلَ</مقطع>
  <مقطع هوية='٩٢٥٢٠'>
    <قول هوية='١٢٨٨٧'>أَكُلَّ هٰذَا بُخْلًا</قول> أَيْ  <قول هوية='٢١٠٨٠'>أَتَفْعَلُ كِلَّ هٰذَا بُخْلًا</قول>
  </مقطع>
  <مقطع هوية='٤٧٩١٤'>وَإِنْ شِئْتَ رَفَعْتَهُ فَلَمْ تَحْمِلْهُ عَلَى الْفِعْلِ وَلَكِنَّكَ تَجْعَلُهُ مُبْتَدَأً</مقطع>
  <مقطع هوية='٥٣٣٦٢'>وَإِنَّمَا أَضْمَرْتَ الْفِعْلَ هَاْهُنَا وَأَنْتَ تَخَاْطِبُ</مقطع>
  <مقطع هوية='٨٣٥٨٨'>لِأَنَّ الْمُخَاْطَبَ الْمُخْبَرَ لَسْتَ تَجْعَلُ لَهُ فِعْلًا آخَرَ يَعْمَلُ فِي الْمُخْبَرِ عَنْهُ</مقطع>
  <مقطع هوية='٠٨٨٨٠'>وَأَنْتَ فِي الْأَمْرِ لِلْغَاْئِبِ قَدْ جَعَلْتَ لَهُ فِعْلًا آخَرَ يَعْمَلُ كَأَنَّكِ قُلْتَ</مقطع>
  <مقطع هوية='٢٦٤٠٢'>
    <قول هوية='٧٨٦٦٧'>قُلْ لَهُ لِيَضْرِبْ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠٢٤٤٩'>أَوْ  <قول هوية='٨١٥٩٠'>قُلْ لَهُ ٱضْرِبْ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='١٦٤٥٧'>أَوْ  <قول هوية='٧١١٥٠'>مُرْهُ أَنْ يَضْرِبَ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='١١٨٨٨'>فَضَعُفَ عِنْدَهُمْ مَعَ مَا يَدْخُلُ مِنَ اللَّبْسِ فِي أَمْرٍ وَاحِدٍ أَنْ يُضْمَرَ فِيْهِ فِعْلَاْنِ لِشَيْئَيْنِ</مقطع>

