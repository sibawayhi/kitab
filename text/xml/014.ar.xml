<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٩"
     درنبورج="١-١٤"
     هارون="١-٤١"
     يعقوب="١-٧٩"
     البكاء="١-٩٩"
     رقم="١٤">
   <عنوان>
      <مقطع رقم="١">هَذَا بَاْبُ الْمَفْعُوْلِ</مقطع>
      <مقطع رقم="٢">الَّذِي تَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
   </عنوان>
   <مقطع رقم="٣">وَذَلِكَ قَوْلُكَ</مقطع>
   <مقطع رقم="٤">
      <قول>كُسِيَ عَبْدُ اللّهِ الثَّوْبَ</قول>
   </مقطع>
   <مقطع رقم="٥">وَ <قول>أُعْطِيَ عَبْدُ اللَّهِ الْمَالَ</قول>
   </مقطع>
   <مقطع رقم="٦">رَفَعْتَ <حرف>عَبْدَ اللَّهِ</حرف> هَهُنَا</مقطع>
   <مقطع رقم="٧">كَمَا رَفَعْتَهُ فِي <حرف>ضُرِبَ</حرف>
   </مقطع>
   <مقطع رقم="٨">حِيْنَ قُلْتَ <قول>ضُرِبَ عَبْدُ اللَّهِ</قول>
   </مقطع>
   <مقطع رقم="٩">وَشَغَلْتَ<هارون مجلد="١" صفحة="٤١"/>بِهِ <حرف>كُسِيَ</حرف> وَ <حرف>أُعْطِيَ</حرف>
   </مقطع>
   <مقطع رقم="١٠">كَمَا شَغَلْتَ بِهِ <حرف>ضُرِبَ</حرف>
   </مقطع>
   <مقطع رقم="١١">وَانْتَصَبَ <حرف>الثَّوْبُ</حرف> وَ <حرف>الْمَالُ</حرف>
   </مقطع>
   <مقطع رقم="١٢">لِأَنَّهُمَا مَفْعُوْلَانِ</مقطع>
   <مقطع رقم="١٣">تَعَدَّى إِلَيْهِمَا فِعْلُ مَفْعُوْلٍ</مقطع>
   <مقطع رقم="١٤">هُوَ بِمَنْزِلَةِ الْفَاْعِلِ</مقطع>
   <مقطع رقم="١٥">وَإِنْ شِئْتَ قَدَّمْتَ وَأَخَّرْتَ</مقطع>
   <مقطع رقم="١٦">فَقُلْتَ <قول>كُسِى الثَّوْبَ زَيْدٌ</قول>
   </مقطع>
   <مقطع رقم="١٧">وَ <قول>أُعْطِيَ الْمَالَ عَبْدُ اللَّهِ</قول>
   </مقطع>
   <مقطع رقم="١٨">كَمَا قُلْتَ <قول>ضَرَبَ زَيْدًا عَبْدُ اللَّهِ</قول>
   </مقطع>
   <مقطع رقم="١٩">فَأَمْرُهُ فِي هَذَا كَأَمْرِ الْفَاْعِلِ</مقطع>
   <مقطع رقم="٢٠">وَاْعْلَمْ أَنَّ الْمَفْعُوْلَ</مقطع>
   <مقطع رقم="٢١">الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
   <مقطع رقم="٢٢">يَتَعَدَّى إِلَى كُلِّ شَيءٍ</مقطع>
   <مقطع رقم="٢٣">تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
   <مقطع رقم="٢٤">الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
   <مقطع رقم="٢٥">وَذَلِكَ قَوْلُكَ</مقطع>
   <مقطع رقم="٢٦">
      <قول>ضُرِبَ زَيْدٌ الضَّرْبَ الشَّدِيْدَ</قول>
   </مقطع>
   <مقطع رقم="٢٧">وَ <قول>ضُرِبَ عَبْدُ اللَّهِ الْيَوْمَيْنِ اللَّذَيْنِ تَعْلَمُ</قول>
   </مقطع>
   <مقطع رقم="٢٨">لَا تَجْعَلُهُ ظَرْفًا</مقطع>
   <مقطع رقم="٢٩">وَلَكِنْ كَمَا تَقُوْلُ</مقطع>
   <مقطع رقم="٣٠">
      <قول>يَا مَضْرُوبَ اللَّيْلَةِ الضَّرْبَ الشَّدِيْدَ</قول>
   </مقطع>
   <مقطع رقم="٣١">وَ <قول>أُقْعِدَ عَبْدُ اللَّهِ الْمُقْعَدَ الْكَرِيْمَ</قول>
   </مقطع>
   <مقطع رقم="٣٢">فَجَمِيْعُ مَا</مقطع>
   <مقطع رقم="٣٣"> تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
   <مقطع رقم="٣٤">الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
   <مقطع رقم="٣٥">يَتَعَدَّى إِلَيْهِ فِعْلُ الْمَفْعُوْلِ</مقطع>
   <مقطع رقم="٣٦">الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ</مقطع>
   <مقطع رقم="٣٧">وَأَعْلَمُ أَنَّ الْمَفْعُوْلَ</مقطع>
   <مقطع رقم="٣٨">الَّذِي لَمْ يَتَعَدَّ إِلَيْهِ فِعْلُ فَاْعِلٍ</مقطع>
   <مقطع رقم="٣٩">فَِي التِّعَدِّي وَالِاقْتِصَاْرِ</مقطع>
   <مقطع رقم="٤٠">بِمَنْزِلَتِهِ إِذَا تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
   <مقطع رقم="٤١">لِأَنَّ مَعْنَاهُ</مقطع>
   <مقطع رقم="٤٢">مُتَعَدِّيٍا إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
   <مقطع رقم="٤٣">وَغَيْرَ مُتَعَدٍّ إِلَيْهِ فِعْلُهُ</مقطع>
   <مقطع رقم="٤٤">سَوَاْءٌ</مقطع>
   <مقطع رقم="٤٥">أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول>ضَرَبْتُ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٤٦">فَلَا تُجَاوِزُ هَذَا الْمَفْعُوْلَ</مقطع>
   <مقطع رقم="٤٧">وَتَقُوْلُ <قول>ضُرِبَ زَيْدٌ</قول>
   </مقطع>
   <مقطع رقم="٤٨">فَلَا يَتَعَدَّاهُ فِعْلُهُ</مقطع>
   <مقطع رقم="٤٩">لِأَنَّ الْمَعْنَى وَاْحِدٌ</مقطع>
   <هارون مجلد="١" صفحة="٤٢"/>
   <مقطع رقم="٥٠">وَتَقُوْلُ <قول>كَسَوْتُ زَيْدًا ثَوْبًا</قول>
   </مقطع>
   <مقطع رقم="٥١">فَتُجَاوِزُ إِلَى مَفْعُوْلٍ آخَرَ</مقطع>
   <مقطع رقم="٥٢">وَتَقُوْلُ <قول>كُسِيَ زَيْدٌ ثَوْبًا</قول>
   </مقطع>
   <مقطع رقم="٥٣">فَلَا تُجَاوِزُ الثَّوْبَ</مقطع>
   <مقطع رقم="٥٤">لِأَنَّ الْأَوَّلَ بِمَنْزِلَةِ الْمَنْصُوْبِ</مقطع>
   <مقطع رقم="٥٥">لِأَنَّ الْمَعْنَى وَاْحِدٌ</مقطع>
   <مقطع رقم="٥٦">وَإِنْ كَانَ لَفْظُهُ لَفْظَ الْفَاْعِلِ</مقطع>
</باب>
