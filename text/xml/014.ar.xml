  <عنوان>

    <مقطع هوية='٠٩٥٣٤'>هَذَا بَاْبُ الْمَفْعُوْلِ الَّذِي تَعَدَّاْهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
  </عنوان>
  <مقطع هوية='٥٧٢٣٦'>وَذَلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٩٤٠٠٣'>
    <قول هوية='٦٠٤٥١'>كُسِيَ عَبْدُ اللهِ الثَّوْبَ</قول>
  </مقطع>
  <مقطع هوية='٠١٣١٢'>وَ<قول هوية='٥٩٢٨٠'>أُعْطِيَ عَبْدُ اللهِ الْمَاْلَ</قول>
  </مقطع>
  <مقطع هوية='١٦٢٧٤'>رَفَعْتَ <حرف>عَبْدَ اللهِ</حرف> هٰهُنَا</مقطع>
  <مقطع هوية='٩٥٩٩٣'>كَمَا رَفَعْتَهُ فِي <حرف>ضُرِبَ</حرف> حِيْنَ قُلْتَ <قول هوية='٠٩٠٠٠'>ضُرِبَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٣٤٩١٣'>وَشَغَلْتَ بِهِ <حرف>كُسِيَ</حرف> وَ<حرف>أُعْطِيَ</حرف>
  </مقطع>
  <مقطع هوية='٦٦٦٥٥'>كَمَا شَغَلْتَ بِهِ <حرف>ضُرِبَ</حرف>
  </مقطع>
  <مقطع هوية='٢٨٩٣٤'>وَانْتَصَبَ <حرف>الثَّوْبُ</حرف> وَ<حرف>الْمَالُ</حرف>
  </مقطع>
  <مقطع هوية='٢٨٢٥٧'>لِأَنَّهُمَا مَفْعُوْلَانِ</مقطع>
  <مقطع هوية='٩٨٥٢٠'>تَعَدَّى إِلَيْهِمَا فِعْلُ مَفْعُوْلٍ هُوَ بِمَنْزِلَةِ الْفَاْعِلِ</مقطع>
  <مقطع هوية='٦٢١٤٩'>وَإِنْ شِئْتَ قَدَّمْتَ وَأَخَّرْتَ</مقطع>
  <مقطع هوية='٥٠٧٠٠'>فَقُلْتَ <قول هوية='٢٦٣٢٥'>كُسِيَ الثَّوْبَ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٠٨٠٨١'>وَ<قول هوية='٤٧٠٧٥'>أُعْطِيَ الْمَاْلَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='١٤٣٣٥'>كَمَا قُلْتَ <قول هوية='٦٣٠٧٠'>ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٠٨٩٠٩'>فَأَمْرُهُ فِي هَذَا كَأَمْرِ الْفَاْعِلِ</مقطع>
  <مقطع هوية='١١٩٣٦'>وَاعْلَمْ أَنَّ الْمَفْعُوْلَ</مقطع>
  <مقطع هوية='٩٢٦٠١'>الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع هوية='٠٨٢٢٢'>يَتَعَدَّى إِلَى كُلِّ شَيءٍ</مقطع>
  <مقطع هوية='٥٢٩٩٧'>تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع هوية='٠٦٨٨٥'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٢٦٤١١'>
    <قول هوية='٧١١٧٢'>ضُرِبَ زَيْدٌ الضَّرْبَ الشَّدِيْدَ</قول>
  </مقطع>
  <مقطع هوية='٣٨٥٨١'>وَ<قول هوية='٧١٩١١'>ضُرِبَ عَبْدُ اللهِ الْيَوْمَيْنِ اللَّذَيْنِ تَعْلَمُ</قول>
  </مقطع>
  <مقطع هوية='٧١٦٧٥'>لَا تَجْعَلُهُ ظَرْفًا</مقطع>
  <مقطع هوية='٥٤٧٦٠'>وَلَكِنْ كَمَا تَقُوْلُ</مقطع>
  <مقطع هوية='٠٣١٣٨'>
    <قول هوية='٢٨٥٢٤'>يَا مَضْرُوْبَ اللَّيْلَةِ الضَّرْبَ الشَّدِيْدَ</قول>
  </مقطع>
  <مقطع هوية='٠٩٧٧٠'>وَ<قول هوية='٢١٣٢٢'>أُقْعِدَ عَبْدُ اللهِ الْمُقْعَدَ الْكَرِيْمَ</قول>
  </مقطع>
  <مقطع هوية='١٦٥٩٢'>فَجَمِيْعُ مَا تَعَدَّى إِلَيْهِ</مقطع>
  <مقطع هوية='٠٤٥٢٤'>فِعْلُ الْفَاْعِلِ الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع هوية='٤٦٧٩٠'>يَتَعَدَّى إِلَيْهِ</مقطع>
  <مقطع هوية='٢٠١٦٤'>فِعْلُ الْمَفْعُوْلِ الَّذِي لَا يَتَعَدَّاهُ فِعْلُهُ</مقطع>
  <مقطع هوية='٤٨٠٩٤'>وَأَعْلَمُ أَنَّ الْمَفْعُوْلَ</مقطع>
  <مقطع هوية='٠٩٢٢٦'>الَّذِي لَمْ يَتَعَدَّ إِلَيْهِ فِعْلُ فَاْعِلٍ</مقطع>
  <مقطع هوية='٧١٢٥٢'>فَِي التِّعَدِّي وَالِاقْتِصَاْرِ</مقطع>
  <مقطع هوية='٧٢٦٢٨'>بِمَنْزِلَتِهِ إِذَا تَعَدَّى إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
  <مقطع هوية='٣٧٧٠٥'>لِأَنَّ مَعْنَاهُ</مقطع>
  <مقطع هوية='٠٦٨٣٥'>مُتَعَدِّيًا إِلَيْهِ فِعْلُ الْفَاْعِلِ</مقطع>
  <مقطع هوية='٣٥٩٩٦'>وَغَيْرَ مُتَعَدٍّ إِلَيْهِ فِعْلُهُ</مقطع>
  <مقطع هوية='٨٧٣٤٢'>سَوَاْءٌ</مقطع>
  <مقطع هوية='٣٧٢٣٢'>أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول هوية='٠٠٦٩٣'>ضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٧٣٠٧٦'>فَلَا تُجَاوِزُ هَذَا الْمَفْعُوْلَ</مقطع>
  <مقطع هوية='٥٧٠١١'>وَتَقُوْلُ <قول هوية='٤٣٩٥٨'>ضُرِبَ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٤٧٩٥١'>فَلَا يَتَعَدَّاهُ فِعْلُهُ</مقطع>
  <مقطع هوية='٣٣٩٢٩'>لِأَنَّ الْمَعْنَى وَاْحِدٌ</مقطع>
  <مقطع هوية='٨٦٨٠٧'>وَتَقُوْلُ <قول هوية='٩٩٢١٨'>كَسَوْتُ زَيْدًا ثَوْبًا</قول>
  </مقطع>
  <مقطع هوية='٧٨٧١٨'>فَتُجَاوِزُ إِلَى مَفْعُوْلٍ آخَرَ</مقطع>
  <مقطع هوية='٣٠٣٢٧'>وَتَقُوْلُ <قول هوية='٣٠٩٣٩'>كُسِيَ زَيْدٌ ثَوْبًا</قول>
  </مقطع>
  <مقطع هوية='١٢٦٢٢'>فَلَا تُجَاوِزُ الثَّوْبَ</مقطع>
  <مقطع هوية='٣٥١٥١'>لِأَنَّ الْأَوَّلَ بِمَنْزِلَةِ الْمَنْصُوْبِ</مقطع>
  <مقطع هوية='٦١٤٣٢'>لِأَنَّ الْمَعْنَى وَاْحِدٌ</مقطع>
  <مقطع هوية='٠٨٣٩٢'>وَإِنْ كَانَ لَفْظُهُ لَفْظَ الْفَاْعِلِ</مقطع>
