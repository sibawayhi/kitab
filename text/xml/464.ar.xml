<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٢٤٩"
     درنبورج="٢-٢٦٧"
     البكاء="٥-٤٠٢"
     هارون="٤-٩٤"
     يعقوب="٤-٢٠٩"
     رقم="٤٦٤">

  <عنوان>
    <مقطع هوية='٤٠٣٩٥'>هٰذَا بَاْبُ مَا عَاْلَجْتَ بِهِ</مقطع>
  </عنوان>
  <مقطع هوية='٧٠٨٧١'>أَمَّا <حرف>الْمِقَصُّ</حرف> فَالَّذِي يُقَصُّ بِهِ</مقطع>
  <مقطع هوية='٥٩٨٢٣'>وَ<حرف>الْمَقَصُّ</حرف> الْمَكَاْنُ وَالْمَصْدَرُ</مقطع>

  <مقطع هوية='٠٦١٣٥'>وَكُلُّ شَيْءٍ يُعَاْلَجُ بِهِ فَهُوَ مَكْسُوْرُ الأَوَّلِ</مقطع>
  <مقطع هوية='٤٦٦٧١'>كَاْنَتْ فِيْهِ هَاْءُ التَّأْنِيْثِ أَوْ لَمْ تَكُنْ</مقطع>
  <مقطع هوية='٠٤٣٥٨'>وَذٰلِكَ قَوْلُكَ <حرف>مِحْلَبٌ</حرف> وَ<حرف>مِنْجَلٌ</حرف>
  وَ<حرف>مِكْسَحَةٌ</حرف> وَ<حرف>مِسَلَّةٌ</حرف>
  وَ<حرف>الْمِصْفَى</حرف> وَ<حرف>الْمِخْرَزُ</حرف>
  وَ<حرف>الْمِخْيَطُ</حرف></مقطع>
  <مقطع هوية='٧٩٠٥١'>وَقَدْ يَجِيْءُ عَلَى <حرف>مِفْعَاْلٍ</حرف></مقطع>
  <مقطع هوية='٣٥٨٩١'>نَحْوُ <حرف>مِقْرَاْضٍ</حرف> وَ<حرف>مِفْتَاْحٍ</حرف>
  وَ<حرف>مِصْبَاْحٍ</حرف></مقطع>
  <مقطع هوية='٣٧٠٦٧'>وَقَاْلُوْا <حرف>الْمِفْتَحُ</حرف>
  كَمَا قَاْلُوْا <حرف>الْمِخْرَزُ</حرف></مقطع>
  <مقطع هوية='٤٠٦٢٤'>وَقَاْلُوْا <حرف>الْمِسْرَجَةُ</حرف>
  كَمَا قَاْلُوْا <حرف>الْمِكْسَحَةُ</حرف></مقطع>

  <التحرير>
    <تشكيل  نسخة="١" نسبة="١٠٠"/>
    <تقطيع نسخة="١" نسبة="١٠٠"/>
    <أقوال  نسخة="١" نسبة="١٠٠"/>
    <شواهد  نسخة="١" نسبة="١٠٠"/>
  </التحرير>

</باب>
