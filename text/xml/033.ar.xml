    <عنوان>
       <مقطع هوية='١٨٠٧٧'>هٰذَا بَاْبُ الْأَمْرِ وَالنَّهْيِ</مقطع>
   </عنوان>
    <فقرة>
       <مقطع هوية='٤٠١٠٨'>وَالْأَمْرُ وَالنَّهْيُ</مقطع>
       <مقطع هوية='٤٢٤٦٩'>يُخْتَاْرُ فِيْهِمَا النَّصْبُ فِي الِٱسْمِ</مقطع>
       <مقطع هوية='٩٤٨٥٤'>الَّذِىْ يُبْنَىْ عَلَيْهِ الْفِعْلُ</مقطع>
       <مقطع هوية='٨٣٤١٠'>وَيُبْنَى عَلَى الْفِعْلِ</مقطع>
       <مقطع هوية='٥٤٠٨٢'>كَمَا اخْتِيرَ ذٰلِكَ فِي بَاْبِ الِاسْتِفْهَامِ</مقطع>
       <مقطع هوية='٧٠٣٠٢'>لِأَنَّ الْأَمْرَ وَالنَّهْيَ إِنَّمَا هُمَا لِلْفِعْلِ</مقطع>
       <مقطع هوية='٥٥٣٨٠'>كَمَا أَنَّ حُرُوْفَ الاِسْتِفْهَامِ بِالْفِعْلِ أَوْلَى</مقطع>
       <مقطع هوية='٦٢٩٤٧'>وَكَانَ الْأَصْلُ فِيْهَا أَنْ يُبْتَدَأُ بِالْفِعْلِ قَبْلَ الٱسْمِ</مقطع>
       <مقطع هوية='٠٤٣٠٩'>فَهَكَذَا الْأَمْرُ وَالنَّهْيُ</مقطع>
       <مقطع هوية='٤٠٨٤٧'>لِأَنَّهُمَا لَا يَقَعَانِ إِلَّا بِالْفِعْلِ</مقطع>
       <مقطع هوية='٤٠٨٣٨'>مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
       <مقطع هوية='٩٢١٥٦'>وَهُمَا أَقْوَى فِي هٰذَا مِنَ الِاسْتِفْهَامِ</مقطع>
       <مقطع هوية='٥٥٧١٣'>لِأَنَّ حُرُوْفَ الاْسْتِفْهَامِ قَدْ يُسْتَفْهَمُ بِهَا
       <!-- <بَدَل> -->
       <!--       <يع>تُسْتَعْمَلُ</يع> -->
       <!--       <بكاْ>يُسْتَفْهَمُ بِهَا</بكاْ> -->
       <!--   </بَدَل> -->
      </مقطع>
       <مقطع هوية='٠٣٢٥٧'>وَلَيْسَ بَعْدَهَا إِلَّا الْأَسْمَاْءُ</مقطع>
       <مقطع هوية='٩٦٦٩٩'>نَحْوُ قَوْلِكَ <قول هوية='٨٧٩٣٥'>أَزَيْدٌ أَخُوْكَ</قول>
      </مقطع>
       <مقطع هوية='٣١٢١٩'>وَ<قول هوية='١٩٨٠٢'>مَتَى زَيْدٌ مُنْطَلِقٌ</قول>
      </مقطع>
       <مقطع هوية='٥٠٧٣٠'>وَ<قول هوية='٩٦٥٨٦'>هَلْ عَمْروٌ ظَرِيْفٌ</قول>
      </مقطع>
       <مقطع هوية='٧٩٤٨٩'>وَالْأَمْرُ وَالنَّهْيُ لَا يَكُوْنَانِ إِلَّا بِفِعْلٍ</مقطع>
       <مقطع هوية='٨٨٨٠٦'>وَذٰلِكَ قَوْلُكَ <قول هوية='٩٩٩٩٤'>زَيْدًا ٱِضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٦٦٧٩٣'>وَ<قول هوية='٤٠٧١٧'>عَمْرًا ٱُمْرُرْ بِهِ</قول>
      </مقطع>
       <مقطع هوية='٦٦٦٤٧'>وَ<قول هوية='١٩٦٠٤'>خَالِدًا ٱِضْرِبْ أَبَاهُ</قول>
      </مقطع>
       <مقطع هوية='٣٣٢٢٦'>وَ<قول هوية='١٣٠٤٤'>زَيْدًا ٱِشْتِرِ لَهُ ثَوْبًا</قول>
      </مقطع>
       <مقطع هوية='٦٠٥٨٩'>وَمِثْلُ ذٰلِكَ <قول هوية='٠٢٦٣١'>أَمَّا زَيْدًا فَاقْتُلْهُ</قول>
      </مقطع>
       <مقطع هوية='١٥٥٦٥'>وَ<قول هوية='٠٣٢١٤'>أَمَّا عَمْرًا فَاْشْتِرِ لَهُ ثَوْبًا</قول>
      </مقطع>
       <مقطع هوية='٥٥٦٠٢'>وَ<قول هوية='٤١٩٩٧'>أَمَّا خَالِدًا فَلَا تَشْتِمْ أَبَاهُ</قول>
      </مقطع>
       <مقطع هوية='٤٣٤٦٣'>وَ<قول هوية='٥٩٥٦٦'>أَمَّا بَكْرًا فَلَا تَمْرُرْ بِهِ</قول>
      </مقطع>
       <مقطع هوية='٠٥٢٣٤'>وَمِنْهُ <قول هوية='٣٣١٧٥'>زَيْدًا لِيَضْرِبْهُ عَمْرٌو</قول>
      </مقطع>
       <مقطع هوية='١٤٥٣٩'>وَ<قول هوية='٤٧١٧١'>بِشْرًا لِيَقْتُلْ أَبَاهُ بَكْرٌ</قول>
      </مقطع>
       <مقطع هوية='٣١٥٦٣'>لِأَنَّهُ أَمْرٌ لِلْغَاْئِبِ</مقطع>
       <مقطع هوية='٨٥١٦٩'>بِمَنْزِلَةِ  <حرف>ٱفْعَلْ</حرف> لِلْمُخَاْطَبِ</مقطع>
       <مقطع هوية='٢٤٢٨٥'>وَقَدْ يَكُوْنُ فِي الْأَمْرِ وَالنَّهْيِ</مقطع>
       <مقطع هوية='٣٣٦٢٤'>أَنْ يُبْنَى الْفِعْلُ عَلَى الٱسْمِ</مقطع>
       <مقطع هوية='٣٥٣٢٧'>وَذٰلِكَ قَوْلُكَ <قول هوية='٦٦٦٩٣'>عَبْدُ اللّٰهِ ٱضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٤٩١٢٦'>ابْتَدَأْتَ  <حرف>عَبْدَ اللّٰهِ</حرف>
      </مقطع>
       <مقطع هوية='٤٠٤٧١'>فَرَفَعْتَهُ بِالِابْتِدَاْءِ</مقطع>
       <مقطع هوية='٢٩٦٥٣'>وَنَبَّهْتَ الْمُخَاْطَبَ لَهُ</مقطع>
       <مقطع هوية='٠٢٢٢٢'>لِيَعْرِفَهُ بِٱسْمِهِ</مقطع>
       <مقطع هوية='٠٤٩٠٠'>ثُمَّ بَنَيْتَ الْفِعْلَ عَلَيْهِ</مقطع>
       <مقطع هوية='٦٠٦٠٤'>كَمَا فَعَلْتَ ذٰلِكَ فِي الْخَبَرِ</مقطع>
       <مقطع هوية='٤٣٥٨٦'>وَمِثْلُ ذٰلِكَ <قول هوية='٧٦٠٤٢'>أَمَّا زَيْدٌ فَاقْتُلْهُ</قول>
      </مقطع>
       <مقطع هوية='٧٩٤٠٦'>فَإِذَا قُلْتَ <قول هوية='٠٠٥٢٢'>زَيْدٌ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٤٠٤١٢'>لَمْ يَسْتَقِمْ أَنْ تَحْمِلَهُ عَلَى الِابْتِدَاْءِ</مقطع>
       <مقطع هوية='٨١٦٣٤'>أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول هوية='٥٦٧٧٦'>زَيْدٌ فَمُنْطَلِقٌ</قول>
      </مقطع>
       <مقطع هوية='٨٨٩٠٤'>لَمْ يَسْتَقِمْ</مقطع>
       <مقطع هوية='٤٧٨٣٣'>فَهُوَ دَلِيْلٌ عَلَى أَنَّهُ</مقطع>
       <مقطع هوية='٧٢٩٨٢'>لَا يَجُوْزُ أَنْ يَكُوْنَ مُبْتَدَأً</مقطع>
       <مقطع هوية='٧٧٠٩٢'>فَإِنْ شِئْتَ</مقطع>
       <مقطع هوية='٧٩٨٤٢'>نَصَبْتَهُ عَلَى شَئٍ هٰذَا تَفْسِيْرُهُ</مقطع>
       <مقطع هوية='٣٠٦٨٦'>كَمَا كَانَ ذٰلِكَ فِي الِاسْتِفْهَامِ</مقطع>
       <مقطع هوية='٨٥٩٢٦'>وَإِنْ شِئْتَ</مقطع>
       <مقطع هوية='٦٢٣٥٥'>عَلَى  <حرف>عَلَيْكَ</حرف>
      </مقطع>
       <مقطع هوية='٥٦٠٧٩'>كَأَنَّكَ قُلْتَ <قول هوية='٥٩٥٠٧'>عَلَيْكَ زَيْدًا فَاقْتُلْهُ</قول>
      </مقطع>
       <مقطع هوية='٧٣٣٤٤'>وَقَدْ يَحْسُنُ وَيَسْتَقِيْمُ</مقطع>
       <مقطع هوية='١٩٧٨٧'>أَنْ تَقُوْلَ <قول هوية='٤٥٦٧٥'>عَبْدُ اللّٰهِ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٤٣٧٩٨'>إِذَا كَانَ مَبْنِيًّا</مقطع>
       <مقطع هوية='٨٦١٣٣'>عَلَى مُبْتَدَإٍ مُظْهَرٍ أَوْ مُضْمَرٍ</مقطع>
       <مقطع هوية='٦٨٧٣٣'>فَأَمَّا فِي الْمُظْهَرِ</مقطع>
       <مقطع هوية='١٧٩٣٧'>فَقَوْلُكَ <قول هوية='٩٤٤٢٨'>هٰذَا زَيْدٌ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٢٦٨٨٢'>وَإِنْ شِئْتَ</مقطع>
       <مقطع هوية='٦٧٣٤٢'>لَمْ تُظْهِرْ  <حرف>هٰذَا</حرف>
      </مقطع>
       <مقطع هوية='٨٦٨٢٧'>وَيَعْمَلُ كَعَمَلِهِ إِذَا أَظْهَرْتَهُ</مقطع>
       <مقطع هوية='٢٩٤١٧'>وَذٰلِكَ قَوْلُكَ <قول هوية='٧٣٨٨٠'>الْهِلَالُ وَاللّٰهِ فَانْظُرْ إِلَيْهِ</قول>
      </مقطع>
       <مقطع هوية='٣٦٢٥٨'>كَأَنَّكَ قُلْتَ <قول هوية='١٩٨٣٢'>هٰذَا الْهِلَالُ</قول>
      </مقطع>
       <مقطع هوية='٩٦١٣٤'>ثُمَّ جِئْتَ بِالْأَمْرِ</مقطع>
       <مقطع هوية='٢١٤٩١'>وَمِمَّا يَدُلُّكَ عَلَى حُسْنِ الْفَاْءِ هٰهُنَا</مقطع>
       <مقطع هوية='٥٨٩٧٢'>أَنَّكَ لَوْ قُلْتَ <قول هوية='٧٩٥٠٠'>هٰذَا زَيْدٌ فَحَسَنٌ جَمِيْلٌ</قول>
          كَانَ كَلَامًا جَيِّدًا</مقطع>
       <مقطع هوية='٩٥٩٧٢'>وَمِنَ ذٰلِكَ قَوْلُ الشَّاْعِرِ</مقطع>
       <شاهدة هوية='١٠٧٦٥'>
          <بيت>
             <مصراع>وَقَاْئِلَةٍ خَوْلانُ فَانْكِحْ فَتَاْتَهُمْ</مصراع>
             <مصراع>وَأُكْرومَةُ الْحَيَّيْنِ خِلْوٌ كَمَا هِيَا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٤٢٠١٢'>هَكَذَا
          <!-- <بدل> -->
          <!--    <يع>فَهٰذَا</يع> -->
          <!--    <بكاْ>هَكَذَا</بكاْ> -->
          <!-- </بدل> -->
       سُمِعَ مِنَ الْعَرَبِ تُنْشِدُهُ</مقطع>
       <مقطع هوية='٣٣٧١٥'>وَتَقُوْلُ <قول هوية='٩٦٨٢٦'>هٰذَا الْرَّجُلَ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٤٤٢٦٥'>إِذَا جَعَلْتَهُ وَصْفًا</مقطع>
       <مقطع هوية='٤٣٧٣١'>وَلَمْ تَجْعَلْهُ خَبَرًا</مقطع>
       <مقطع هوية='٥١٦٢٥'>وَكَذٰلِكَ <قول هوية='٧٢٣٨٩'>هٰذَا زَيْدًا فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٣٦٣٦٩'>إِذَا كَانَ مَعْطُوفًا عَلَى  <حرف>هٰذَا</حرف>  أَوْ بَدَلًا</مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٩١١١٧'>وَتَقُوْلُ <قول هوية='٥٩٨٠١'>اللَّذَيْنِ يَأْتِيَانِكِ فَاْضْرِبْهُمَا</قول>
      </مقطع>
       <مقطع هوية='٤٠٥٢٨'>تَنْصِبُهُ كَمَا تَنْصِبُ  <حرف>زَيْدًا</حرف>
      </مقطع>
       <مقطع هوية='٣٩٣٠٣'>وَإِنْ شِئْتَ</مقطع>
       <مقطع هوية='٤٩٢٨٩'>رَفَعْتَهُ عَلَى أَنَّ يَكُوْنَ مَبْنِيًّا عَلَى مُظْهَرٍ أَوْ مُضْمَرٍ</مقطع>
       <مقطع هوية='٢٧٨٣٨'>وَإِنْ شِئْتَ</مقطع>
       <مقطع هوية='٠٥٢١٠'>كَانَ مُبْتَدَأً</مقطع>
       <مقطع هوية='٧٥١٦٠'>لِأَنَّهُ يَسْتَقِيْمُ أَنْ تَجْعَلَ خَبَرَهُ مِنْ غَيْرِ الْأَفْعَالِ بِالْفَاْءِ</مقطع>
       <مقطع هوية='٨٠٣٨٠'>أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول هوية='٥٩٩٤٢'>الَّذِيْ يَأْتِيْنِي فَلَهُ دِرْهَمٌ</قول>
      </مقطع>
       <مقطع هوية='٦٠٢٥٦'>وَ<قول هوية='٩٥٣١٥'>الَّذِي يَأْتِيْنِي فَمُكْرَمٌ مَحْمُوْدٌ</قول>
      </مقطع>
       <مقطع هوية='٥٦٤٧٧'>كَانَ حَسَنًا</مقطع>
       <مقطع هوية='٥١٥٩٦'>وَلَوْ قُلْتَ <قول هوية='٠٩٢٥٦'>زَيْدٌ فَلَهُ دِرْهَمٌ</قول>
      </مقطع>
       <مقطع هوية='٠٩٥٦٤'>لَمْ يَجُزْ</مقطع>
       <مقطع هوية='٣٨٣٣٢'>وَإِنَّمَا جَاْزَ ذٰلِكَ</مقطع>
       <مقطع هوية='٩٩٢٧٦'>لِأَنَّ قَوْلَهُ <قول هوية='٥٣٢٩٠'>الَّذِيْ يَأْتِيْنِيْ فَلَهُ دِرِهُمٌ</قول>
      </مقطع>
       <مقطع هوية='١٠٨٠٣'>فَِي مَعْنَى الْجَزَاْءِ</مقطع>
       <مقطع هوية='٩٩١٧٣'>فَدَخَلَتْ الْفَاْءُ فِي خَبَرِهِ</مقطع>
       <مقطع هوية='٤١٢٢٢'>كَمَا تَدْخُلُ فِي خَبَرِ الْجَزَاْءِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٣٠٩٨١'>وَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
       <مقطع هوية='٧٥٢١٥'>
           <آية هوية='٧٥٥٢٠'>الَّذِيْنَ يُنْفِقُوْنَ أَمْوَالَهُمْ بِاللَّيْلِ وَالنَّهَاْرِ سِرًا وَعَلَانِيَةً فَلَهُمْ أَجْرُهُمْ عِنْدَ رَبَّهِمْ وَلَا خَوْفٌ عَلَيْهِمْ وَلَا هُمْ يَحْزَنُوْنَ</آية>
      </مقطع>
       <مقطع هوية='٩٤٨٦٠'>وَمِنَ ذٰلِكَ قَوْلُهُمْ <قول هوية='٧٥٠٧٤'>كُلُّ رَجُلٍ يَأْتِيكَ فَهُوَ صَالِحٌ</قول>
      </مقطع>
       <مقطع هوية='١٥٤٥١'>وَ<قول هوية='٤٢٩٣١'>كُلُّ رَجُلٍ جَاْءَ فَلَهُ دِرْهَمَانِ</قول>
 f     </مقطع>
       <مقطع هوية='٣٩٩٠٢'>لِأَنَّ مَعْنَى الْحَدِيْثِ الْجَزَاْءُ</مقطع>
       <مقطع هوية='٩٧٠٣٢'>وَأَمَّا قَوْلُ عُدَىْ بْنِ زَيْدٍ</مقطع>
       <شاهدة هوية='٨٦٥٤٧'>
          <بيت>
             <مصراع>أَرَوَاْحٌ مُوَدِّعٌ أَمْ بُكُوْرُ</مصراع>
             <مصراع>أَنْتَ فَانْظُرْ لِأَيْ ذَاكَ تَصِيْرُ</مصراع>
         </بيت>
      </شاهدة>
       
       <مقطع هوية='١٧٠٤٠'>فَإِنَّهُ عَلَى أَنْ يَكُوْنَ فِي الَّذِي يَرْفَعُ عَلَى {حَاْلِ} حَالَةِ الْمَنْصُوْبِ فِي النَّصْبِ</مقطع>
       <مقطع هوية='٦٤٠٥٩'>[يَعْنِي أَنَّ الَّذِىْ مِنْ سَبَبِهِ مَرْفُوْعٌ فَتَرْفَعُهُ بِفِعْلٍ هٰذَا يُفَسَّرَهُ</مقطع>
       <مقطع هوية='٢٠٦١٣'>كَمَا كَانَ الْمَنْصُوْبُ مَا هُوَ مِنْ سَبَبِهِ يَنْتَصِبُ</مقطع>
       <مقطع هوية='٢١٥٢٠'>فَيَكُوْنُ مَا سَقَطَ عَلَى سَببَيْهِ تَفْسِيْرُهُ]</مقطع>
       <مقطع هوية='٣١٨٤٩'>فَِي الَّذِىْ يَنْصِبُ عَلَى أَنَّهُ شِئٌ هٰذَا تَفْسِيْرُهُ</مقطع>
       <مقطع هوية='١٣٩٥٦'>يَقُوْلُ تَرْفَعُ  <حرف>أَنْتَ</حرف>
      </مقطع>
       <مقطع هوية='٢٧٦٢٦'>عَلَى فِعْلٍ مُضْمَرٍ</مقطع>
       <مقطع هوية='٣٢٩١٦'>لِأَنَّ الَّذِىْ مِنْ سَبَبِهِ مَرْفُوْعٌ</مقطع>
       <مقطع هوية='١٨٥١٧'>وَهُوَ الِٱسْمُ الْمُضْمَرُ</مقطع>
       <مقطع هوية='٩٨٧٠١'>الَّذِي فِي  <حرف>انْظُرْ</حرف>
      </مقطع>
       <مقطع هوية='٠٦٥٢٧'>وَقَدْ يَجُوْزُ أَنْ يَكُوْنَ  <حرف>أَنْتَ</حرف>
      </مقطع>
       <مقطع هوية='٣٢٢٧٧'>عَلَى قَوْلِهِ <قول هوية='٢٢٢٦٨'>أَنْتَ الْهَالِكُ</قول>
      </مقطع>
       <مقطع هوية='٢١٦٨٠'>كَمَا يُقَالُ إِذَا ذُكِرَ إِنْسَانٌ لِشَئٍ</مقطع>
       <مقطع هوية='٣٨٢٥٢'>
          <قول هوية='١٧١٧١'>قَالَ النَّاْسُ زَيْدٌ</قول>
      </مقطع>
       <مقطع هوية='٤٤٩٧٤'>وَ<قول هوية='٩٣٧٥٥'>قَالَ النَّاْسُ أَنْتَ</قول>
      </مقطع>
       <مقطع هوية='١٠٦٩٧'>وَلَا يَكُوْنُ عَلَى أَنَّ تُضْمِرَ  <حرف>هٰذَا</حرف>
      </مقطع>
       <مقطع هوية='٣٢٨١٨'>لِأَنَّكَ لَا تُشِيْرُ لِلْمُخَاْطَبِ إِلَى نَفْسِهِ</مقطع>
       <مقطع هوية='٠٦٥١٩'>وَلَا تَحْتَاْجُ إِلَى ذٰلِكَ</مقطع>
       <مقطع هوية='٤٩١٣٢'>وَإِنَّمَا تُشِيْرُ لَهُ إِلَى غَيْرِهِ</مقطع>
       <مقطع هوية='٠٠٤٨٦'>أَلَا تَرَى أَنَّكَ لَوْ أَشَرْتَ لَهُ إِلَى شَخْصِهِ</مقطع>
       <مقطع هوية='٨٤٦٦٦'>فَقُلْتَ <قول هوية='١١٦٦٠'>هٰذَا أَنْتَ</قول>
      </مقطع>
       <مقطع هوية='٨٦٣٣٠'>لَمْ يَسْتَقِمْ</مقطع>
       <مقطع هوية='٣٧٤٥٥'>وَيَجُوْزُ هٰذَا أَيْضًا</مقطع>
       <مقطع هوية='٦٥٨٣٧'>عَلَى قَوْلِكَ <قول هوية='٤٨٢٠٨'>شَاهِدَاكَ</قول>
      </مقطع>
       <مقطع هوية='٣٩٣٣١'>أَيْ <قول هوية='٢٧٩٦١'>مَا ثَبَتَ لَكَ شَاهِدَاكَ</قول>
      </مقطع>
       <مقطع هوية='٤٨٩٦٦'>قَالَ اللّٰهُ تَعَالَى جَدُّهُ</مقطع>
       <مقطع هوية='٢٩٧٤٠'>
           <آية هوية='٥٤٦٤٤'>طَاْعَةٌ وَقَوْلٌ مَّعْرُوْفٌ</آية>
      </مقطع>
       <مقطع هوية='٣٠٦٠٠'>فَهُوَ مِثْلُهُ</مقطع>
       <مقطع هوية='٥٣٦٢٠'>فَإِمَّا أَنْ يَكُوْنَ أَضْمَرَ الٱسْمَ</مقطع>
       <مقطع هوية='١٠٥٣٧'>وَجَعَلَ هٰذَا خَبَرَهُ</مقطع>
       <مقطع هوية='٣٢٥١٦'>كَأَنَّهُ قَالَ <قول هوية='٦٢٢٧٦'>أَمْرِي طَاْعَةٌ [وَقَوْلٌ مَّعْرُوْفٌ]</قول>
      </مقطع>
       <مقطع هوية='٤٧٨٦٧'>أَوْ يَكُوْنَ أَضْمَرَ الْخَبَرَ</مقطع>
       <مقطع هوية='١٩٤٨٣'>فَقَالَ <قول هوية='٦٣٥٣١'>طَاْعَةٌ وَقَوْلٌ مَّعْرُوْفٌ أَمْثَلُ</قول>
      </مقطع>
       
   </فقرة>
    <فقرة>
       <مقطع هوية='٧٩٧٧٢'>وَاْعْلَمْ أَنَّ الدُّعَاْءَ</مقطع>
       <مقطع هوية='٨٨٩٧٦'>بِمَنْزِلَةِ الْأَمْرِ وَالنَّهْيِ</مقطع>
       <مقطع هوية='٠٩٥٤٠'>وَإِنَّمَا قِيلَ  <حرف>دُعَاْءٌ</حرف>
      </مقطع>
       <مقطع هوية='٣٨٣٠٥'>لِأَنَّهُ اسْتُعْظِمَ أَنْ يُقَالَ أَمْرٌ أَوْ نَهْيٌ</مقطع>
       <مقطع هوية='١٥٢٥٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٣٥٠٢٦'>اللّٰهُمَّ زَيْدًا فَاْغْفِرْ ذَنْبَهُ</قول>
      </مقطع>
       <مقطع هوية='٧٤٠٨٠'>وَ<قول هوية='٧٧٧٤٤'>زَيْدًا فَأَصْلِحْ شَأْنَهُ</قول>
      </مقطع>
       <مقطع هوية='٤٢٦٤٤'>
          <قول هوية='٧٣٤٤٤'>وَعَمْرًا لِيَجْزِهِ اللّٰهُ خَيْرًا</قول>
      </مقطع>
       <مقطع هوية='٠١٤٥٠'>وَتَقُوْلُ <قول هوية='٩٦٤٦٥'>زَيْدًا قَطَعَ اللّٰهُ يَدَهُ</قول>
      </مقطع>
       <مقطع هوية='٢٤٦١٣'>وَ<قول هوية='٢٢٥٧٦'>زَيْدًا أَمَرَّ اللّٰهُ عَلَيْهِ الْعَيْشَ</قول>
      </مقطع>
       <مقطع هوية='٢٣٧٣٩'>لِأَنَّ مَعْنَاهُ مَعْنَى <قول هوية='٩٦٥٨٣'>زَيْدًا لِيَقْطَعِ الَلَّهُ يَدَهُ</قول>
      </مقطع>
       <مقطع هوية='٠٧٧٢٢'>وَقَالَ أَبُوْ الْأَسْوَدِ الْدُّؤَلِىُّ</مقطع>
       <شاهدة هوية='٨١٤٢٦'>
          <بيت>
             <مصراع>أَمِيْرَانِ كَانَا آخِيَانّىْ كِلَاهُمَا</مصراع>
             <مصراع>فَكُلِا جَزَاهُ اللّٰهُ عَنِّىْ بِمَا فَعَلْ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع هوية='٨٨٧٩٣'>وَيَجُوْزُ فِيْهِ مِنْ الرَّفْعِ</مقطع>
       <مقطع هوية='٧٦١٢٠'>مَا جَاْزَ فِي الْأَمْرِ وَالنَّهّيِ</مقطع>
       <مقطع هوية='٦٤٩٦٦'>وَيَقْبُحُ فِيْهِ</مقطع>
       <مقطع هوية='٣٢٦٣٠'>مَا يَقْبُِحُ فِي الْأَمْرِ وَالنَّهْيِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٨٥٤٣٢'>وَتَقُوْلُ <قول هوية='٩٣٧٨٧'>أَمَّا زَيْدًا فَجَدَعًا لَهُ</قول>
      </مقطع>
       <مقطع هوية='٦٣٨٣٠'>وَ<قول هوية='٢٥٥٢٣'>أَمَّا عَمْرًا فَسَقْيًا لَهُ</قول>
      </مقطع>
       <مقطع هوية='٧٨١٣٤'>لِأَنَّكَ لَوْ أَظْهَرْتَ</مقطع>
       <مقطع هوية='١١٢٣١'>الَّذِىْ انْتَصَبَ عَلَيْهِ  <حرف>سَقْيًا</حرف>  وَ<حرف>جَدَعًا</حرف>
      </مقطع>
       <مقطع هوية='٦٦٠٤٤'>لَنَصَبْتَ  <حرف>زَيْدًا</حرف>  وَ<حرف>عَمْرًا</حرف>
      </مقطع>
       <مقطع هوية='٤٦٧٣٤'>فَإِضْمَاْرُهُ بِمَنْزِلَةِ إِظْهَاْرِهِ</مقطع>
       <مقطع هوية='٧٦٩١٠'>كَمَا تَقُوْلُ <قول هوية='٥٢٦٥١'>أَمَّا زَيْدًا فَضَرْبًا</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٣٦٥٧٩'>وَتَقُوْلُ <قول هوية='٠٤٤٣٥'>أَمَّا زَيْدٌ فَسَلَامٌ عَلَيْهِ</قول>
      </مقطع>
       <مقطع هوية='٢٢٣٧٨'>وَ<قول هوية='٨٠٥٤٩'>أَمَّا الْكَافِرُ فَلَعْنَةُ اللّٰهِ عَلَيْهِ</قول>
      </مقطع>
       <مقطع هوية='٣٢٥٧٩'>لِأَنَّ هٰذَا ارْتَفَعَ بِالِابْتِدَاْءِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٣٩٨٠٧'>وَأَمَّا قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
       <مقطع هوية='٩٦٦٨٠'>
          <آية هوية='٩٨٣٦١' سورة="نور">الزَّانِيَةُ وَالزَّانِي فَاْجْلِدُوْا كُلَّ وَاْحِدٍ مِنْهُمَا مِائَةَ جَلْدَةٍ</آية>
      </مقطع>
       <مقطع هوية='٢٤٣٢٢'>وَقَوْلُهُ تَعَالَى</مقطع>
       <مقطع هوية='٣١٩٥٨'>
          <آية هوية='٢٩٠٨٢' سورة="الْماْئدَة">وَالسَّاْرِقُ وَالسَّاْرِقَةُ فَاقْطَعُوَا أَيْدِيَهُمَا</آية>
      </مقطع>
       <مقطع هوية='١٩٧٥٩'>فَإِنَّ هٰذَا لَمْ يُبْنَ عَلَى الْفِعْلِ</مقطع>
       <مقطع هوية='٦١٠٠٣'>وَلَكِنَّهُ جَاْءَ عَلَى مِثْلِ قَوْلِهِ تَعَالَىْ</مقطع>
       <مقطع هوية='١٤٥١٠'>
          <آية هوية='٦١٥٥٣' سورة="محَمْد">مَثَلُ الْجَنَّةِ الَّتِي وَُعِدَ الْمُتَّقُوْنَ</آية>
      </مقطع>
       <مقطع هوية='٨٩٦٠٩'>ثُمَّ قَالَ بَعْدُ</مقطع>
       <مقطع هوية='٨٩٩٧١'>
          <آية هوية='٩٨٢١٤' سورة="محَمْد">فَِيْهَا أَنْهَاْرٌ مِنْ مَاْءٍ</آية>
      </مقطع>
       <مقطع هوية='٦٤٤١٠'>فَِيْهَا كَذَا وَكَذَا</مقطع>
       <مقطع هوية='٣٨٦٦١'>فَإِنَّمَا وَُضِعَ الْـ<حرف>مَثَلُ</حرف>
      </مقطع>
       <مقطع هوية='٦٤٦١١'>لِلْحَدِيْثِ الَّذِىْ بَعْدَهُ</مقطع>
       <مقطع هوية='٠٢٧٩٥'>فَذَكَرَ أَخْبَاْرًا وَأَحَاْدِيْثَ</مقطع>
       <مقطع هوية='٨٥٤٨٨'>فَكَأَنَّهُ قَالَ <قول هوية='٨٥٢٧٥'>وَمِنَ الْقَصَصِ مَثَلُ الْجَنَّةِ</قول>
      </مقطع>
       <مقطع هوية='٨١٤٧٨'>أَوْ <قول هوية='٥٠٩٥٩'>مِمَّا يُقَصُّ عَلَيْكُمْ مَثَلُ الْجَنَّةِ</قول>
      </مقطع>
       <مقطع هوية='١٦٢٧٧'>فَهُوَ مَحْمُوْلٌ عَلَى هٰذَا الْإِضْمَاْرِ وَنَحْوِهِ</مقطع>
       <مقطع هوية='٠٦٥٩٦'>وَاللّٰهُ تَعَالَىْ أَعْلَمُ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٥٩٥٤٢'>وَكَذٰلِكَ  <حرف>الزَّانِيَةُ وَالزَّانِي</حرف>
      </مقطع>
       <مقطع هوية='٦٣٩٩٩'>كَأَنَّهُ لَمَّا قَالَ جَلَّ ثَنَاْؤُهُ</مقطع>
       <مقطع هوية='٣٦٥١٥'>
          <آية هوية='٧٩٢٥٨' سورة="نور">سُوْرَةٌ أَنْزَلْنَاهَا وَفَرَضْنَاهَا</آية>
      </مقطع>
       <مقطع هوية='٥٥٤٦٥'>قَالَ <قول هوية='٤٧٤٨١'>فَِي الْفَرَاْئِضِ الزَّانِيَةُ وَالزَّانِي</قول>
      </مقطع>
       <مقطع هوية='٦٣٠٥٢'>أَوْ <قول هوية='٧٢٧٩٨'>الزَّانِيَةُ وَالزَّانِي فِي الْفَرَاْئِضِ</قول>
      </مقطع>
       <مقطع هوية='٠٢٧٥٥'>ثُمَّ قَالَ  <حرف>فَاْجْلِدُوْا</حرف>
      </مقطع>
       <مقطع هوية='١٧١١٠'>فَجَاْءَ بِالْفِعْلِ</مقطع>
       <مقطع هوية='٣٨١٤٢'>بَعْدَ أَنَ مَضَىْ فِيْهِمَا الرَّفْعُ</مقطع>
       <مقطع هوية='٩٢٨٠٠'>كَمَا قَالَ</مقطع>
       <شاهدة هوية='٢٥٦٣٨'>
          <بيت>
             <مصراع>وَقَاْئِلَةِ خَوْلانُ فَانْكِحْ فَتَاْتَهُمْ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع هوية='٨٩٩٠٦'>فَجَاْءَ بِالْفِعْلِ</مقطع>
       <مقطع هوية='٢٩١٧٢'>بَعْدَ أَنْ عَمِلَ فِيْهِ الْمُضْمَرُ</مقطع>
       <مقطع هوية='٩٩٣٥٣'>وَكَذٰلِكَ  <حرف>وَالسَّاْرِقُ وَالسَّاْرِقَةُ</حرف>
      </مقطع>
       <مقطع هوية='٧٤٦١١'>كَأَنَّهُ قَالَ <قول هوية='٩٥١٣٩'>وَفِيْمَا فَرَضَ اللّٰهُ عَلَيْكُمْ السَّاْرِقُ وَالسَّاْرِقَةُ</قول>
      </مقطع>
       <مقطع هوية='١٣٣٧٠'>أَوْ <قول هوية='١٢٩٣٨'>السَّاْرِقُ وَالسَّاْرِقَةُ فِيْمَا فُرِضَ عَلَيْكُمْ</قول>
      </مقطع>
       <مقطع هوية='٢٤٥٢٧'>فَإِنَّمَا دَخَلَتْ هَذِهِ الْأَسْمَاْءُ</مقطع>
       <مقطع هوية='٢٧٨٩٨'>بَعْدَ قِصَصٍ وَأَحَاْدِيْثَ</مقطع>
       <مقطع هوية='٧٨٠٨٠'>وَيُحْمَلُ عَلَى نَحْوٍ مِنْ هٰذَا</مقطع>
       <مقطع هوية='٢٣٠١٠'>وَمِثْلُ ذٰلِكَ <آية هوية='٢٢٦١١' سورة="النساء">وَاللَّذانِ يَأْتِيَانِهَا مِنْكُمْ فَآذُوهُمَا</آية>
      </مقطع>
       
       <مقطع هوية='٥٦٨٢٦'>وَقَدْ يَجْرِي هٰذَا فِي  <حرف>زَيْدٍ</حرف>  وَ<حرف>عَمْروٍ</حرف>
      </مقطع>
       <مقطع هوية='٤٣٩٢٨'>عَلَى هٰذَا الْحَدِّ</مقطع>
       <مقطع هوية='٩٠٤٩٤'>إِذَا كُنْتَ تُخْبِرُ بِأَشْيَاْءَ أَوْ تُوْصِي</مقطع>
       <مقطع هوية='٥٤٣١٥'>ثُمَّ تَقُوْلُ <قول هوية='٨٨٥٧٤'>زَيْدٌ</قول>
      </مقطع>
       <مقطع هوية='٨٤٣١٨'>أَيْ <قول هوية='٨٧٤٩٥'>زَيْدٌ فِيْمَنْ أُوْصِيَ بِهِ فَأَحْسِنْ إِلَيْهِ وَأَكْرِمْهُ</قول>
      </مقطع>
       <مقطع هوية='٦١٥٣٠'>وَقَدْ قَرَأَ أَنَاْسٌ</مقطع>
       <مقطع هوية='٥٩٩٠٩'>
          <آية هوية='٥٩٣٥٧' سورة="الْماْئدَة">وَالسَّاْرِقَ وَالسَّاْرِقَةَ</آية>
      </مقطع>
       <مقطع هوية='١٩١٩١'>وَ<آية هوية='٨٨٦٠١' سورة="نور">الزَّانِيَةَ وَالزَّانِي</آية>
      </مقطع>
       <مقطع هوية='٧٨٤٦٠'>وَهُوَ فِي الْعَرَبِيَّةِ</مقطع>
       <مقطع هوية='٣٢٩٦٧'>عَلَى مَا ذَكَرْتُ لَكَ مِنْ الْقُوَّةِ</مقطع>
       <مقطع هوية='٤٤٨٢٦'>وَلَكِنْ أَبَتِ الْعَامَّةُ</مقطع>
       <مقطع هوية='٠٠٩٠٦'>إِلَّا الْقِرَاْءَةَ بِالرَّفْعِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع هوية='٤٥٩٥٢'>وَإِنَّمَا كَانَ الْوَجْهُ فِي الْأَمْرِ وَالنَّهْيِ النَّصْبُ</مقطع>
       <مقطع هوية='١٠٨٠٠'>لِأَنَّ حَدَّ الْكَلَامِ تَقْدِيْمُ الْفِعْلِ</مقطع>
       <مقطع هوية='٧٠٧٤٦'>وَهُوَ فِيْهِ أَوْجَبُ</مقطع>
       <مقطع هوية='٤٥٨٥٩'>إِذْ كَانَ ذٰلِكَ يَكُوْنُ فِي أَلْفِ الِاسْتِفْهَامِ</مقطع>
       <مقطع هوية='٥٢٢٤٠'>لِأَنَّهُمَا لَا يَكُوْنَانِ إِلَّا بِفِعْلٍ</مقطع>
       <مقطع هوية='٧٨٣٦٩'>وَقَبُحَ تَقْدِيْمُ الِٱسْمِ فِي سَاْئِرِ الْحُرُوْفِ</مقطع>
       <مقطع هوية='٣٩٧٧٠'>لِأَنَّهَا حُرُوْفٌ تَحْدُثُ قَبْلَ الْفِعْلِ</مقطع>
       <مقطع هوية='٢٢١٩٤'>وَقَدْ يَصِيْرُ مَعْنَى حَدِيْثِهِنَّ إِلَى الْجَزَاْءِ</مقطع>
       <مقطع هوية='١٠٤١٦'>وَالْجَزَاْءً لَا يَكُوْنُ إِلَّا خَبَرًا</مقطع>
       <مقطع هوية='٤١٤١٠'>وَقَدْ يَكُوْنُ فِيْهِنَّ الْجَزَاْءُ فِي الْخَبَرِ</مقطع>
       <مقطع هوية='٤٩٤٩٤'>وَهْى غَيْرُ وَاْجِبَةٍ كَحُرُوفِ الْجَزَاْءِ</مقطع>
       <مقطع هوية='٥٨٨٨٧'>فَأُجْرِيَتْ مُجْرَاهَا</مقطع>
       <مقطع هوية='٧٧٥٦٦'>وَالْأَمْرُ لَيْسَ يَحْدُثُ لَهُ حَرْفٌ</مقطع>
       <مقطع هوية='١٦٩٨٦'>سِوَىْ الْفِعْلِ</مقطع>
       <مقطع هوية='٩٥٧٤٧'>فَيُضَاْرِعُ حُرُوْفَ الْجَزَاْءِ</مقطع>
       <مقطع هوية='٤٨٢٩٧'>فَيَقْبُحُ حَذْفُ الْفِعْلِ مِنْهُ</مقطع>
       <مقطع هوية='٣٣٨٥٠'>كَمَا يَقْبُحُ حَذْفُ الْفِعْلِ</مقطع>
       <مقطع هوية='٠٤٦٢٥'>بَعْدَ حُرُوْفِ الْجَزَاْءِ</مقطع>
       <مقطع هوية='٣٤٥٨٩'>وَإِنَّمَا يَقْبُحُ حَذْفُ الْفِعْلِ وَإِضْمَاْرُهُ</مقطع>
       <مقطع هوية='٩٩٠٤٠'>بَعْدَ حُرُوْفِ الِاسْتِفْهَامِ</مقطع>
       <مقطع هوية='١٣٠١٩'>لِمُضَاْرَعْتِهَا حُرُوْفَ الْجَزَاْءِ</مقطع>
       <مقطع هوية='٧٩٣٢٩'>وَإِنَّمَا قُلْتَ <قول هوية='٢٠٤١٧'>زَيْدًا ٱِضْرِبْهُ</قول>
      </مقطع>
       <مقطع هوية='٧٧٠٦٦'>وَ<حرف>ٱضْرِبْهُ</حرف>  مَشْغُوْلَةٌ بِالْهَاْءِ</مقطع>
       <مقطع هوية='٣٦١٨٣'>لِأَنَّ الْأَمْرَ وَالنَّهْيَ</مقطع>
       <مقطع هوية='٢٢١٧٣'>لَا يَكُوْنَانِ إِلَّا بِالْفِعْلِ</مقطع>
       <مقطع هوية='٠٦٨٣٦'>فَلَا يُسْتَغْنَى عَنِ الْإِضْمَاْرِ</مقطع>
       <مقطع هوية='٩٢٣٥٨'>إِنْ لَمْ يَظْهَرْ</مقطع>
   </فقرة>

