  <عنوان>
    <مقطع هوية='٤٤٧٦٥'>هٰذَا بَاْبُ <حرف>أَيٍّ</حرف> مُضَاْفًا إِلَى مَا لَا يَكْمُلُ اسْمًا إِلَّا بِصِلَةٍ</مقطع>
  </عنوان>

  <مقطع هوية='٨١٥١٧'>فَمِنْ ذٰلِكَ قَوْلُكَ <!-- اضْرِبْ --> <قول هوية='٣٠٤٧٨'>أَيُّ مَنْ رَأَيْتَ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٠٤٧٨١'>فَـ<حرف>مَنْ</حرف> كَمَلَتِ اسْمًا بِـ<حرف>رَأَيْتَ</حرف></مقطع>
  <مقطع هوية='٠٢٨٥٦'>فَصَاْرَ بِمَنْزِلَةِ <حرف>الْقَوْمِ</حرف> فَكَأَنَّكَ قُلْتَ
  <قول هوية='٤٢٣٩٤'>أَيُّ الْقَوْمِ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٧٧٥٧٢'>وَ<قول هوية='٨٤٦٦٦'>أَيُّهُمْ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٣٥٨٧٠'>وَكَذٰلِكَ <قول هوية='٣١١٧٨'>أَيُّ مَنْ <!-- الَّذِيْنَ --> رَأَيْتَ فِي الدَّاْرِ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٦٤٢٦٤'>وَتَقُوْلُ <قول هوية='٠٩٨٢٩'>أَيُّ الَّذِيْنَ رَأَيْتَ فِي الدَّاْرِ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٧١٠١٩'>لَأَنَّ <حرف>رَأَيْتَ</حرف> مِنْ صِلَةِ <حرف>الَّذِيْنَ</حرف></مقطع>
  <مقطع هوية='٧٨٩١٦'>وَ<حرف>فِيْهَا</حرف> مُتَّصِلَةٌ بِـ<حرف>رَأَيْتَ</حرف></مقطع>
  <مقطع هوية='٥٣٤٢٧'>لِأَنَّكَ ذَكَرْتَ مَوْضِعَ الرُّؤْيَةِ</مقطع>
  <مقطع هوية='٦٦٤٠٩'>فَكَأَنَّكَ قُلْتَ أَيْضًا <قول هوية='٥٤٠٣٢'>أَيُّ الْقَوْمِ أَفْضَلُ</قول>
  وَ<قول هوية='٨٨٨٤٠'>أَيُّهُمْ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٦٢٦٥٧'>لِأَنَّ <حرف>فِيْهَا</حرف> لَمْ تُغَيِّرْ الْكَلَاْمَ عَنْ حَاْلِهِ</مقطع>
  <مقطع هوية='٧٩٨٨٣'>كَمَا أَنَّكَ إِذَا قُلْتَ <قول هوية='٠٤٦١٨'>أَيُّ مَنْ رَأَيْتَ قَوْمَهُ أَفَضَلُ</قول></مقطع>
  <مقطع هوية='٤٦٠٩٢'>كَاْنَ بِمَنْزِلَةِ [ قَوْلِكَ ] <قول هوية='١٧١٠٩'>أَيُّ مَنْ رَأَيْتَ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٦٢٢٢٠'>فَالصِّلَةُ مُعْمِلَةً وَغَيْرَ مُعْمِلَةٍ فِي <حرف>الْقَوْمِ</حرف> سَوَاْءٌ</مقطع>

  <مقطع هوية='٤١١٣٣'>وَتَقُوْلُ <قول هوية='٣٠٧٧٣'>أَيَّ مَنْ فِي الدَّاْرِ رَأَيْتَ أَفْضَلَ</قول></مقطع>
  <مقطع هوية='٧٣١٠١'>وَذٰلِكَ لِأَنَّكَ جَعَلْتَ <حرف>فِي الدَّاْرِ</حرف> صِلَةً</مقطع>
  <مقطع هوية='٥٠٢٤٥'>فَتَمَّ الْمُضَاْفُ إِلَيْهِ <حرف>أَيٌّ</حرف> اسْمًا</مقطع>
  <مقطع هوية='٥١٣٤٦'>ثُمَّ ذَكَرْتَ <حرف>رَأَيْتَ</حرف></مقطع>
  <مقطع هوية='٣٦٤٩١'>فَكَأَنَّكَ قُلْتَ <قول هوية='٥٠٠٩٣'>أَيَّ الْقَوْمِ رَأَيْتَ أَفْضَلَ</قول></مقطع>
  <مقطع هوية='٢٥٢١٥'>وَلَمْ تَجْعَلْ <حرف>فِي الدَّاْرِ</حرف> هَاْهُنَا مَوْضِعًا لِلرُّؤْيَةِ</مقطع>

  <مقطع هوية='٦٢١٧١'>[ وَتَقُوْلُ <قول هوية='١١٥٠٥'>أَيُّ مَنْ فِي الدَّاْرِ رَأَيْتَ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٧٦٨٢٥'>كَأَنَّكَ قُلْتَ <قول هوية='١١٠٨٧'>أَيُّ مَنْ رَأَيْتَ فِي الدَّاْرِ أَفْضَلُ</قول> ]</مقطع>
  <مقطع هوية='١٠٤٨٣'>وَلَوْ قُلْتَ <قول هوية='٣٦٠١٢'>أَيُّ مَنْ فِي الدَّاْرِ رَأَيْتَ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٦١٨١١'>لَجَاْزَ إِذَا أَرَدْتَ أَنْ تَجْعَلَ <حرف>فِي الدَّاْرِ</حرف> مَوْضِعًا لِلرُّؤْيَةِ</مقطع>

  <مقطع هوية='٠١٧٠١'>فَكَأَنَّكَ قُلْتَ <قول هوية='٤٧٣٤٥'>أَيُّ مَنْ فِي الدَّاْرِ رَأَيْتَهُ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٨٧٥٨٨'>[ وَلَوْ قُلْتَ <قول هوية='٨٩٥٢٧'>أَيُّ مَنْ رَأَيْتَ فِي الدَّاْرِ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='٢٦٧٠٥'>قَدَّمْتَ أَوْ أَخَّرْتَ سَوَاْءٌ ]</مقطع>

  <مقطع هوية='٢٨٠٠٣'>وَتَقُوْلُ فِي شَيْءٍ مِنْهُ آخَرَ
  <قول هوية='٣٦٥٨٧'>أَيُّ مَنْ إِنْ يَأْتِنَا نُعْطِهِ نُكْرِمْهُ</قول></مقطع>
  <مقطع هوية='٠٨٧١٩'>فَهٰذَا إِنْ جَعَلْتَهُ اسْتِفْهَاْمًا فَإِعْرَاْبُهُ الرَّفْعُ</مقطع>
  <مقطع هوية='٣٠٩٩٣'>وَهُوَ كَلَاْمٌ صَحِيْحٌ</مقطع>
  <مقطع هوية='٠٨٧٨٩'>مِنْ قِبَلِ أَنَّ <قول هوية='٥٣٨٢٢'>إِنْ يَأْتِنَا نُعْطِهِ</قول> صِلَةٌ لِـ<حرف>مَنْ</حرف> فَكَمَلَ اسْمًا</مقطع>
  <مقطع هوية='٢٣٥٧٧'>أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول هوية='١٧١٣٩'>مَنْ إِنْ يَأْتِنَا نُعْطِهِ بَنُو فُلَاْنٍ</قول></مقطع>
  <مقطع هوية='٩٠٤٥٣'>كَأَنَّكَ قُلْتَ <قول هوية='٠٨٣١٥'>الْقَوْمُ بَنُو فُلَاْنٍ</قول>
  ثُمَّ أَضَفْتَ <حرف>أَيًّا</حرف> إِلَيْهِ</مقطع>
  <مقطع هوية='٤٨٥٠٦'>فَكَأَنَّكَ قُلْتَ <قول هوية='٥٣١٦٢'>أَيُّ الْقَوْمِ نُكَرِمُهُ</قول></مقطع>
  <مقطع هوية='٤٤٠٠٥'>وَ<قول هوية='٦١٥٦٥'>أَيُّهُمْ نُكْرِمُهُ</قول></مقطع>
  <مقطع هوية='٠٠٠٨٥'>فَإِنْ لَمْ تُدْخِلْ الْهَاْءَ فِي <حرف>نُكْرِمُ</حرف> نَصَبْتَ</مقطع>
  <مقطع هوية='٥٠٠٨٧'>كَأَنَّكَ قُلْتَ <قول هوية='٢٤٢٨٠'>أَيَّهُمْ نُكْرِمُ</قول></مقطع>
  <مقطع هوية='٢٥٦٧١'>فَإِنْ جَعَلْتَ الْكَلَاْمَ خَبَرًا فَهُوَ مُحَاْلٌ</مقطع>
  <مقطع هوية='٢٩٢٩٩'>لِأَنَّهُ لَا يَحْسُنُ [ أَنْ تَقُوْلَ ] فِي الْخَبَرِ
  <قول ج="*" هوية='٦٥٨٦١'>أَيُّهُمْ نُكْرِمُهُ</قول></مقطع>
  <مقطع هوية='٥٢٧٥٨'>ولَكِنَّكَ إِنْ قُلْتَ
  <قول هوية='٦٨٤٣٦'>أَيَّ مَنْ إِنْ يَأْتِنَا نُعْطِهِ نُكْرِمُ تُهِيْنُ</قول></مقطع>
  <مقطع هوية='٣٦٤٠٩'>كَاْنَ فِي الْخَبَرِ كَلَاْمًا</مقطع>
  <مقطع هوية='٦٥٢٧٢'>لِأَنَّ <حرف>أَيَّهُمْ</حرف> بِمَنْزِلَةِ <حرف>الَّذِي</حرف> فِي الْخَبَرِ</مقطع>
  <مقطع هوية='٠١٨٥٢'>فَصَاْرَ <حرف>نُكْرِمُ</حرف> صِلَةً</مقطع>
  <مقطع هوية='٥٦٩٤٣'>وَأَعْمَلْتَ <حرف>تُهِيْنُ</حرف></مقطع>
  <مقطع هوية='٦٧٨١٨'>كَأَنَّكَ قُلْتَ <قول هوية='٧٥٩٠٦'>الَّذِي نُكْرِمُ تُهِيْنُ</قول></مقطع>

  <مقطع هوية='٣٥٨٢٢'>وَتَقُوْلُ <قول هوية='٩٧٤٢١'>أَيَّ مَنْ إِنْ يَأْتِنَا نُعْطِهِ نُكْرِمْ تُهِنْ</قول></مقطع>
  <مقطع هوية='٩٤٤٢٠'>كَأَنَّكَ قُلْتَ <قول هوية='٥٣٢٧٧'>أَيَّهُمْ نُكْرِمْ تُهِنْ</قول></مقطع>

  <مقطع هوية='٦٢٦٦٩'>وَتَقُوْلُ <قول هوية='٨٩١٣٦'>أَيُّ مَنْ يَأْتِيْنَا يُرِيْدُ صِلَتَنَا فَنُحَدِّثُهُ</قول></مقطع>

XXXXXXXXXXXXXXX

  <مقطع هوية='٤٠٨٧١'>فَيَسْتَحِيْلُ فِي وَجْهٍ وَيَجُوْزُ فِي وَجْهٍ</مقطع>
  <مقطع هوية='٥٢٠٨٧'>فَأَمَّا الْوَجْهُ الَّذِي يَسْتَحِيْلُ فِيْهِ</مقطع>
  <مقطع هوية='٩٨٧٦٩'>فَهُوَ أَنْ يَكُوْنَ <حرف>يُرِيْدُ</حرف> فِي مَوْضِعِ <حرف>مُرِيْدٍ</حرف></مقطع>
  <مقطع هوية='٨٠٣١٠'>إِذَا كَاْنَ حَاْلًا فِيْهِ وَقَعَ الْإِتْيَاْنُ</مقطع>
  <مقطع هوية='٠٥٧٧٥'>لِأَنَّهُ مُعَلَّقٌ بِـ<حرف>يَأْتِيْنَا</حرف></مقطع>
  <مقطع هوية='١٥٨٤٨'>كَمَا كَاْنَ <حرف>فِيْهَا</حرف> مُعَلَّقًا بِـ<حرف>رَأَيْتُ</حرف>
  فِي <قول هوية='٣٦٣٦٢'>أَيُّ مَنْ رَأَيْتَ فِي الدَّاْرِ أَفْضَلُ</قول></مقطع>
  <مقطع هوية='١٦٥٢٠'>فَكَأَنَّكَ قُلْتَ <قول هوية='٥١٢٦٧'>أَيُّهُمْ فَنُحَدِّثُهُ</قول></مقطع>
  <مقطع هوية='٠٥٥٠٦'>فَهٰذَا لَا يَجُوْزُ فِي خَبَرٍ وَلَا اسْتِفْهَاْمٍ</مقطع>
  <مقطع هوية='٣٧٠٩٣'>وَأَمَّا الْوَجْهُ الَّذِي يَجُوْزُ فِيْهِ</مقطع>
  <مقطع هوية='٦٧٦١٠'>فَأَنْ يَكُوْنَ <حرف>يُرِيْدُ</حرف> مَبْنِيًّا عَلَى مَا قَبْلَهُ</مقطع>
  <مقطع هوية='٢١٨٣٢'>وَيَكُوْنُ <حرف>يَأْتِيْنَا</حرف> الصِّلَةَ</مقطع>
  <مقطع هوية='٦٧٤٠٨'>فَإِنْ أَرَدْتَ ذٰلِكَ كَاْنَ كَلَاْمًا</مقطع>
  <مقطع هوية='٠٥٦٧١'>كَأَنَّكَ قُلْتَ أَ<قول هوية='٩٩٩٠٥'>يُّهُمْ يُرِيْدُ صِلَتَنَا فَنُحَدِّثُهُ</قول></مقطع>
  <مقطع هوية='٢٣٨١٨'>[ وَ<حرف>فَنُحَدِّثَهُ</حرف> إِنْ أَرَدْتَ الْخَبَرَ ]</مقطع>
  <مقطع هوية='٩٣٦٣٧'>وأَمّا <قول ج="*" هوية='١٢٧٥٥'>أَيَّ مَنْ يَأْتِيْنَا فَنُحَدِّثُهُ</قول> فَهُوَ مَحَاْلٌ</مقطع>
  <مقطع هوية='٦٧٤٦٤'>لِأَنَّ <قول ج="*" هوية='٢٤٨٩٥'>أَيَّهُمْ فَنُحَدِّثُهُ</قول> مَحَاْلٌ</مقطع>
  <مقطع هوية='٣٨٨٩٤'>فَإِنْ أَخْرَجْتَ الْفَاْءَ فَقُلْتَ <قول هوية='٧٣١٣٠'>أَيَّ مَنْ يَأْتِيْنِي نُحَدِّثُهُ</قول></مقطع>
  <مقطع هوية='٩١١٣٢'>فَهُوَ كَلَاْمٌ فِي الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٤٠٤٩٥'>مُحَاْلٌ فِي الْإِخْبَاْرِ</مقطع>

  <مقطع هوية='٠٨٦٣٣'>وَتَقُوْلُ <قول هوية='٠١٣٢١'>أَيَّ مَنْ إِنْ يَأْتِهِ مَنْ إِنْ يَأْتِنَا نُعْطِهِ
  يُعْطِهِ تَأْتِ يُكْرِمْكَ</قول></مقطع>
  <مقطع هوية='٤٨٩٨٨'>وَذٰلِكَ أَنَّ <حرف>مِنْ</حرف> الثَّاْنِيَةَ
  صِلَتُهَا <حرف>إِنْ يَأْتِنَا نُعْطِهِ</حرف></مقطع>
  <مقطع هوية='٧٧٢٧٤'>فَصَاْرَ بِمَنْزِلَةِ <حرف>زَيْدٍ</حرف></مقطع>
  <مقطع هوية='٣٥٦٢٢'>فَكَأَنَّكَ قُلْتَ <قول هوية='٠١٥٩٦'>أَيَّ مَنْ إِنْ يَأْتِهِ زَيْدٌ يُعْطِهِ تَأْتِ يُكْرِمِكَ</قول></مقطع>
  <مقطع هوية='٩٦٠٥١'>فَصَاْرَ <حرف>إِنْ يَأْتِهِ زَيْدٌ يُعْطِهِ</حرف>
  صِلَةً لِـ<حرف>مَنْ</حرف> الأُوْلَى</مقطع>
  <مقطع هوية='٨٥٠٤٢'>فَكَأَنَّكَ قُلْتَ <قول هوية='٣٢٢٤٠'>أَيَّهُمْ تَأْتِ يَكْرِمُكَ</قول></مقطع>
  <مقطع هوية='٣١٧٤٧'>فْجَمِيْعُ مَا جَاْزَ وَحَسُنَ فِي <حرف>أَيُّهِمْ</حرف> هَاْهُنَا</مقطع>
  <مقطع هوية='٢٨٢٨٦'>جَاْزَ فِي <قول هوية='٧٧٠٢٠'>أَيَّ مَنْ إِنْ يَأْتِهِ
  مَنْ إِنْ يَأْتِنَا نُعْطِهِ يُعْطِهِ</قول></مقطع>
  <مقطع هوية='٩٨٢٨٦'>لِأَنَّهُ بِمَنْزِلَةِ <حرف>أَيَّهُمْ</حرف></مقطع>

  <مقطع هوية='١٥١٧٣'>وَسَأَلْتُ الْخَلِيْلَ رَحِمَهُ اللهُ عَنْ [ قَوْلِهِمْ ]
  <قول هوية='٩٤٥٢٠'>أَيُّهُنَّ فُلَاْنَةُ</قول>
  وَ<قول هوية='٦٨٣٧٨'>أَيَّتُهُنَّ فُلَاْنَةُ</قول></مقطع>
  <مقطع هوية='٦٨٦٩٦'>فَقَاْلَ إِذَا قُلْتَ <حرف>أَيّ</حرف> فَهُوَ بِمَنْزِلَةِ <حرف>كُلّ</حرف></مقطع>
  <مقطع هوية='٧٩٨٩٠'>لِأَنَّ <حرف>كُلًّا</حرف> مُذَكَّرٌ يَقَعُ لِلْمُذَكَّرِ وَالْمُؤَنَّثِ</مقطع>
  <مقطع هوية='٨٣٤٢١'>وَ[هُوَ أَيْضًا ] بِمَنْزِلَةِ <حرف>بَعْضٍ</حرف></مقطع>
  <مقطع هوية='١٩٣٥٦'>فَإِذَا قُلْتَ <حرف>أَيَّتُهُنَّ</حرف></مقطع>
  <مقطع هوية='١٨٢٣٢'>فَإِنَّكَ أَرَدْتَ أَنْ تُؤَنِّثَ الِاسْمَ</مقطع>
  <مقطع هوية='٠٣٢٤٦'>كَمَا أَنَّ بَعْضَ الْعَرَبِ فِيْمَا زَعَمَ الْخَلِيْلُ رَحِمَهُ اللهُ
  يَقُوْلُ <قول هوية='٧٠٤٦٩'>كُلَّتُهُنَّ [ مُنْطَلِقَةٌ ]</قول></مقطع>

