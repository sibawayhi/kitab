     بلاق="١-٤٦٨"
     درنبورج="١-٤١٦"
     البكاء="٤-٢٧٠"
     هارون="٣-١٣٤"
     يعقوب="٣-١٥٦"
     رقم="٢٦٨">

  <عنوان>
    <مقطع هوية='٣٠٨٧٦'>هٰذَا بَاْبٌ مِنْ أَبْوَاْبِ <حرف>أَنَّ</حرف> تَكُوْنَ <حرف>أَنَّ</حرف> فِيْهِ مَبْنِيَّةً عَلَى مَا قَبْلَهَا</مقطع>
  </عنوان>

  <مقطع هوية='٦٦٨٣٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٠٤٤٨٠'>أَحَقًّا أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٠٩٨٧٦'>وَ<قول هوية='٢٨٧٧٢'>آلْحَقَّ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٥٥٧١٣'>وَكَذَلْكَ إِْنْ أَخْبَرْتَ فَقُلْتَ <قول هوية='٥٣٦٩٢'>حَقًّا أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='١٠١٦٢'>وَ<قول هوية='٥٣٤٨٥'>الْحَقَّ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٧٦٥٠١'>وَكَذٰلِكَ <قول هوية='٩١٠٦٤'>أَأَكْبَرَ ظَنِّكَ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='١٣٨١٠'>وَ<قول هوية='٣٤١٢١'>أَجَهْدَ رَأْيِكَ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='١٨٣٩٠'>وَكَذٰلِكَ هُمَا فِي الْخَبَرِ</مقطع>

  <مقطع هوية='١٩٤٩١'>وسَأَلْتْ <سند>الْخَلِيْلَ</سند> فَقُلْتُ</مقطع>
  <مقطع هوية='٧٢٦٩٧'><قبس>مَا مَنَعَهُمْ أَنْ يَقُوْلُوْا <قول هوية='٩٩٩٦٣'>أَحَقًا إِنَّكَ ذَاْهِبٌ</قول> عَلَى الْقَلْبِ</قبس></مقطع>
  <مقطع هوية='٦٢٢٩٣'><قبس>كَأَنَّكَ قُلْتَ <قول هوية='١٩٢٤٥'>إِنَّكَ ذَاْهِبٌ حَقًّا</قول></قبس></مقطع>
  <مقطع هوية='٢٦٧٥٤'><قبس>وَ<قول هوية='٥٤٩٨٤'>إِنَّكَ ذَاْهِبٌ الْحَقَّ</قول></قبس></مقطع>
  <مقطع هوية='٢٧٦١١'><قبس>وَ<قول هوية='٧١٠٥٣'>أَإِنَّكَ مُنْطَلِقٌ حَقًّا</قول></قبس></مقطع>

  <مقطع هوية='٥٤٧٦٣'>فَقَاْلَ <قبس>لَيْسَ هٰذَا مِنْ مَوَاْضِعَ <حرف>إِنَّ</حرف></قبس></مقطع>
  <مقطع هوية='٨٨٩٦٢'><قبس>لِأَنَّ <حرف>إِنَّ</حرف> لَا يُبْتَدَأُ بِهَا فِي كُلِّ مَوْضِعٍ</قبس></مقطع>

  <مقطع هوية='٠٨٤٤٧'>وَلَوْ جَاْزَ هٰذَا لَجَاْزَ <قول هوية='٣٢٤٣٠'>يَوْمَ الْجُمْعَةِ إِنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٧٦٧٣٠'>تُرِيْدُ <قول هوية='٧٨٢١٤'>إِنَّكَ ذَاْهِبٌ يَوْمَ الْجُمْعَةِ</قول></مقطع>
  <مقطع هوية='٣٥٩٣٤'>وَلَقُلْتَ أَيْضًا <قول هوية='٧٦٤٢٩'>لَا مَحَاْلَةَ إِنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٥٨٩٣٤'>تُرِيْدُ <قول هوية='٢٧٦٦٠'>إِنَّكَ لَا مَحَاْلَةَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٣٧٩١٣'>فَلَمَّا لَمْ يَجُزْ ذٰلِكَ حَمَلُوْهُ عَلَى <قول هوية='٤٧٧٨٢'>أَفِي حَقٍّ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٢١٢١٩'>وَعَلَى <قول هوية='٠١٩١٠'>أَفِي أَكْبَرِ ظَنِّكَ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٤٤٧٣٤'>وَصَاْرَتْ <حرف>أَنَّ</حرف> مَبْنِيَّةً عَلَيْهِ</مقطع>
  <مقطع هوية='٢٠٩٢٠'>كَمَا يُبْنَى <حرف>الرَّحِيْلُ</حرف> عَلَى <حرف>غَدًا</حرف>
  إِذَا قُلْتَ <قول هوية='٥٥٩٩٢'>غَدًا الرَّحِيْلُ</قول></مقطع>
  <مقطع هوية='٨٩٤٠٥'>وَالدَّلِيْلُ عَلَى ذٰلِكَ إِنْشَاْدُ الْعَرَبِ هٰذَا الْبَيْتَ كَمَا أَخْبَرْتُكُ</مقطع>
  <مقطع هوية='١٣٨٨٢'>زَعَمَ <سند>يُوْنُسُ</سند> أَنَّهُ سَمِعَ الْعَرَبَ
  يَقُوْلُوْنَ فِي بَيْتِ <شاعر>الْأَسْوَدِ بْنِ يَعْفُرَ</شاعر></مقطع>
  <شاهدة هوية='٢٦٤٠٠' شاعر="الْأَسْوَدُ بْنُ يَعْفُرَ">
    <بيت>
      <مصراع>أَحَقًّا بَنِيِ أَبْنَاْءِ سَلْمَى بْنِ جَنْدَلٍ</مصراع>
      <مصراع><ثبات>تَهَدُّدُكُمْ</ثبات> إِيَّاْيَ وَسْطَ الْمَجَاْلِسِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٣٠٠٩'> فَزَعَمْ <سند>الْخَلِيْلُ</سند> أَنَّ <حرف>التَّهَدُّدَ</حرف> هَاْهُنَا بِمَنْزِلَةِ <حرف>الرَّحِيْلِ</حرف> بَعْدَ <حرف>غَدٍ</حرف></مقطع>
  <مقطع هوية='٦٦٥٩٧'>وَأَنَّ <حرف>أَنَّ</حرف> بِمَنْزِلَتِهِ وَمَوْضِعَهُ كَمَوْضِعِهِ</مقطع>

  <مقطع هوية='٥٢٠٣٥'>وَنَظِيْرٌ <حرف>أَحَقًّا أَنَّكَ ذَاْهِبٌ</حرف>
  مِنْ أَشْعَاْرِ الْعَرَبِ قَوْلُ الْعَبْدِيِّ</مقطع>
  <شاهدة هوية='٢٥٨٢٢'>
    <بيت>
      <مصراع><ثبات>أَحَقًّا أَنَّ</ثبات> جِيْرَتَنَا اسْتَقَلُّوْا</مصراع>
      <مصراع>فَنِيَّتُنَا وَنِيَّتُهُمْ فَرَيِقُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٤١٥٨'>قَاْلَ <حرف>فَرِيْقٌ</حرف> كَمَا تَقُوْلُ لِلْجَمَاْعَةِ <حرف>هُمْ صَدِيْقٌ</حرف></مقطع>
  <مقطع هوية='٦٣٤١٣'>وَقَاْلَ اللهُ تَعَاْلَى جَدُّهُ
  <آية هوية='٨٥٤٦٥' سورة="٥٠" آية="١٧">عَنْ ٱلْيَمِيْنِ وَعَنْ ٱلشِّمَاْلِ قَعِيْدٌ</آية></مقطع>

  <مقطع هوية='٩٩٦٦٢'>وَقَاْلَ <شاعر>عَمْرُو بْنُ أَبِي رَبِيْعَةَ</شاعر></مقطع>
  <شاهدة هوية='٤٧٢٩٥' شاعر="عَمْرُو بْنُ أَبِي رَبِيْعَةَ">
    <بيت>
      <مصراع><ثبات>أَأَلْحَقَّ</ثبات> أَنْ دَاْرُ الرَّبَاْبِ تَبَاْعَدَتْ</مصراع>
      <مصراع>أَوِ انْبَتَّ حَبْلٌ <ثبات>أَنَّ</ثبات> قَلْبَكَ طَاْئِرُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٤٧٩٥٣'> وَقَاْلَ <شاعر>النَّاْبِغَةُ الْجَعْدِيُّ</شاعر></مقطع>
  <شاهدة هوية='٩٩٤٩٠' شاعر="النَّاْبِغَةُ الْجَعْدِيُّ">
    <بيت>
      <مصراع>أَلَا أَبْلِغْ بَنِي خَلَفٍ رَسُوْلًا</مصراع>
      <مصراع><ثبات>أَحَقًّا</ثبات> أَنَّ أَخْطَلَكُمْ هَجَاْنِي</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣١١٢٣'>فَكُلُّ هٰذِهِ الْبُيُوْتِ سَمِعْنَاْهَا مِنْ أَهْلِ الثَّقَةِ هٰكَذَا</مقطع>
  <مقطع هوية='٩١٧٠٢'>وَالرَّفْعُ فِي جَمِيْعِ ذَا جَيِّدٌ قَوِيٌّ</مقطع>
  <مقطع هوية='١٧٧٥٦'>وَذٰلِكَ أَنَّكَ إِنْ شِئْتَ قُلْتَ <قول هوية='١٠٧٤١'>أَحَقٌّ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٨٧٥٢٥'>وَ<قول هوية='٩٩٠٩٩'>أَأَكْبَرُ ظَنِّكَ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٤٠٨٧٨'>تَجْعَلُ الْآخِرَ هُوَ الْأَوَّلَ</مقطع>

  <مقطع هوية='٦٩٤٧٤'>وَأَمَّا قَوْلُهُمْ <قول هوية='٠٣٢٤٢'>لَا مَحَاْلَةَ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٢٥٤٩٧'>فَإِنَّمّا حَمَلُوْا <حرف>أَنَّ</حرف> عَلى أَنَّ فِيْهِ إِْضَماْرَ <حرف>مِنْ</حرف></مقطع>
  <مقطع هوية='٠٦١٥١'>عَلَى قَوْلِهِ <قول هوية='٧١٩٤٨'>لَا مَحَاْلَةَ مِنْ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٩٢٧٥٩'>كَمَا تَقُوْلُ <قول هوية='٣٣٥١٠'>لَا بُدَّ أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='١١٤٥٦'>كَأَنَّكَ قُلْتَ <قول هوية='٣٠١٠٠'>لا بُدَّ مِنْ أَنَّكَ ذَاْهِبٌ</قول>
  حِيْنَ لَمْ يَجُزْ أَنْ يَحْمِلُوْا الَكَلَاْمَ عَلى الَقْلَبِ</مقطع>

  <مقطع هوية='٢٥٧٣٤'>وَسَأْلُتُهُ عَنْ قْوِلِهْم <قول هوية='٥٤٥٠٨'>أَمَّا حَقًّا فَإِنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٥٢٩٦١'>فَقَاْلَ هٰذَا جَيِّدٌ وَهٰذَا الْمَوْضِعُ مِنْ مَوَاْضِعِ <حرف>إِنَّ</حرف></مقطع>
  <مقطع هوية='٣٧٧٥٣'>أَلَا تَرَى أَنَّكَ تُقُوْلُ <قول هوية='٦٢٣٢٥'>أَمَّا يَوْمَ الْجُمْعَةِ فَإِنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٥٥٧٣٤'>وَ<قول هوية='٠٨٤٠٤'>أَمَّا فِيْهَا فَإِنَّكَ دَاْخِلٌ</قول></مقطع>
  <مقطع هوية='٩١٤٣٦'>فَإِنَّمَا جَاْزَ هٰذَا فِي <حرف>أَمَّا</حرف></مقطع>
  <مقطع هوية='٢١٧٧٩'>لِأَنَّ فِيْهَا مَعْنَى <قول هوية='٢٧١٨٥'>يَوْمَ الْجُمْعَةِ مَهْمَا يَكُنْ مِنْ شَيْءٍ فَإِنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٤٤٢٩٨'>وَأَمَّا قَوْلُهُ عَزَّ وَجَلَّ <آية هوية='٤٧٨٢٤' سورة="١٦" آية="٦٢">لَا جَرَمَ أَنَّ لَهُمُ ٱلنَّاْرَ</آية></مقطع>
  <مقطع هوية='٣٦٨٩٧'>فَإِنَّ <حرف>جَرَمَ</حرف> عَمِلَتْ فِيْهَا</مقطع>
  <مقطع هوية='٢٢٠١٨'>لِأَنَّهَا فِعْلٌ وَمَعْنَاْهَا <قول هوية='٨٤٩٣٠'>لَقَدْ حَقًّا أَنَّ لَهُمْ النَّاْرَ</قول></مقطع>
  <مقطع هوية='٩٢١٢٩'>وَ<قول هوية='٠٥٠٠٩'>لَقَدِ اسَتَحَقَّ أَنَّ لَهُمُ النَّاْرَ</قول></مقطع>
  <مقطع هوية='٢٤٦٦٩'>وَقَوْلُ الْمُفَسِّرِيْنَ مَعْنَاْهَا <قول هوية='٤٦١٧٤'>حَقًّا أَنَّ لَهُمُ النَّاْرَ</قول> يَدُلُّكَ أَنَّهَا بِمَنْزِلَةِ هٰذَا الْفِعْلِ إِذَا مَثَّلْتَ</مقطع>
  <مقطع هوية='٩٩١١٧'>فَـ<حرف>جَرَمَ</حرف> قَدْ عَمِلَتْ في <حرف>أَنَّ</حرف> عَمَلَهَا
  في قَوْلِ الْفَزَاْرِيِّ</مقطع>
  <شاهدة هوية='٤٦١٧٩'>
    <بيت>
      <مصراع>وَلَقَدْ طَعَنْتُ أَبَا عُيَيْنَةَ طَعْنَةً</مصراع>
      <مصراع><ثبات>جَرَمَتْ فَزَاْرَةَ</ثبات> بَعْدَها أَنْ يَغْضَبُوْا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٣١٨٦'>أَيْ <حرف>أَحَقَّتْ فَزَاْرَةَ</حرف></مقطع>
  <مقطع هوية='٦٣٨٥٠'>وَزَعَمَ <سند>الْخَلِيْلُ</سند> أَنَّ <حرف>لَا جَرَمَ</حرف>
  إِنَّمَا تَكُوْنُ جَوَاْبًا لِمَا قَبْلَهَا مِنَ الْكَلَاْمِ</مقطع>
  <مقطع هوية='٨٤٩٧٨'>يُقوُل الَّرُجُل <قول هوية='٣٤٠٤٨'>كَاْنَ كَذَا وَكَذَا</قول>
  وَ<قول هوية='١٩٣٢٢'>فَعَلُوْا كَذَا وَكَذَا</قول></مقطع>
  <مقطع هوية='٣٤٠٧٧'>فَتَقُوْلُ <قول هوية='٧٦٩٧٥'>لَا جَرَمَ أَنَّهُمْ سَيَنْدُمُوَنَ</قول>
  أْو <حرف>أَنَّهُ سَيَكُوْنُ كَذَا وَكَذَا</حرف></مقطع>

  <مقطع هوية='٢٨٧٢٩'>وَتَقُوْلُ <قول هوية='٨٨٧٢٧'>أَمَّا جَهْدَ رَأْيِي فَإِنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٠٣٧٤٤'>لِأَنَّكَ لَمْ تُضْطَّرَ إِلَى أَنْ تَجْعَلَهُ ظَرْفًا كَمَا اضْطُرِرُتَ فِي الْأَوَّلِ </مقطع>
  <مقطع هوية='٢٦٢٤٨'>وَهٰذَا مِنْ مَوَاْضِعِ <حرف>إِنَّ</حرف></مقطع>
  <مقطع هوية='٧٩٧٠٨'>لِأَنَّكَ تَقُوْلُ <قول هوية='٦٢٤٧٨'>أَمَّا فِي رَأْيِي فَإِنَّكَ ذَاْهِبٌ</قول> أَيْ <حرف>فَأَنْتَ ذَاْهِبٌ</حرف></مقطع>
  <مقطع هوية='٦٦٣٣٠'>وَإِنْ شِئْتَ قُلْتَ <حرف>فَأَنَّكَ</حرف> وَهُوَ ضَعِيْفٌ</مقطع>
  <مقطع هوية='٣٥٨٠٤'>لِأَنَّكَ إِذَا قُلْتَ <قول هوية='٤٤٠٤٥'>أَمَّا جَهْدَ رَأْيِي فَإِنَّكَ عَاْلِمٌ</قول></مقطع>
  <مقطع هوية='٦٧٩٤٦'>لَمْ تُضْطَرَّ إِلَى أَنْ تَجْعَلَ الْجَهْدَ ظَرْفًا للْقِصَّةِ</مقطع>
  <مقطع هوية='٣٨٢٧١'>لِأَنَّ ابْتِدَاْءَ <حرف>إِنَّ</حرف> يَحْسُنُ هَاْهُنَا</مقطع>

  <مقطع هوية='٧٢٧٧٣'>وَتَقُوْلُ <قول هوية='٨٥٧٢٣'>أَمَّا فِي الدَّاْرِ فَإِنَّكَ قَاْئِمٌ</قول></مقطع>
  <مقطع هوية='٢٣٥٣٦'>لَا يَجُوْزُ فِيْهِ إِلَّا <حرف>إِنَّ</حرف></مقطع>
  <مقطع هوية='٣٨٤٧٨'>لِأَنَّ <حرف>إِنَّ</حرف> تَجْعَلُ الْكَلَاْمَ قِصَّةً وَحَدِيْثًا</مقطع>
  <مقطع هوية='٢٦٠٣٧'>وَلَمْ تُرِدْ أَنْ تُخْبِرَ أَنَّ فِي الدَّاْرِ حَدِيْثَهُ</مقطع>
  <مقطع هوية='٩٧٧١٠'>وَلٰكِنَّكَ أَرَدْتَ أَنْ تَقُوْلَ <قول هوية='٨٢٠٠١'>أَمَّا فِي الدَّاْرِ فَأَنْتَ قَاْئِمٌ</قول></مقطع>
  <مقطع هوية='٩١٩٦١'>فَمِنْ ثَمَّ لَمْ يَعْمَلْ فِي <حرف>أَنَّ</حرف> شَيْءٌ</مقطع>
  <مقطع هوية='٧٣٣٥٤'>فَإِنْ أَرَدْتَ أَنْ تَقُوْلَ <قول هوية='٦٢٩٠٠'>أَمَّا فِي الدَّاْرِ فَحَدِيْثُكَ وَخَبَرُكَ</قول></مقطع>
  <مقطع هوية='٢٤٦٠٢'>قُلْتَ <قول هوية='٥٣٤٢٩'>أَمَّا فِي الدَّاْرِ فَأَنَّكَ مُنْطَلِقٌ</قول>
  أَيْ هٰذِهِ الْقِصَّةُ</مقطع>

  <مقطع هوية='٥٤٣٦٠'>وَيَقُوْلُ الرَّجُلُ <قول هوية='٦٦٦٠٨'>مَا الْيَوْمَ</قول></مقطع>
  <مقطع هوية='٩٦٨٨١'>فَتَقُوْلُ <قول هوية='٨٠٤٨٩'>الْيَوْمَ أَنَّكَ مُرْتَحِلٌ</قول></مقطع>
  <مقطع هوية='٠٢٤٧٥'>كَأَنَّهُ قَاْلَ <قول هوية='٤١٠١١'>فِي الْيَوْمِ رِحْلَتُكَ</قول></مقطع>
  <مقطع هوية='٦٢١٨٧'>وَعَلَى هٰذَا الْحَدِّ تَقُوْلُ <قول هوية='١٣٧٨٤'>أَمَّا الْيَوْمَ فَأَنَّكَ مُرْتَحِلٌ</قول></مقطع>
  <مقطع هوية='٧١٨٣٣'>وَأَمَّا قَوْلُهُم <حرف>أَمَّا بَعْدُ فَإِنَّ اللهَ تَعَاْلَى قَاْلَ فِي كِتَاْبِهِ</حرف></مقطع>
  <مقطع هوية='٥٨٩٢٠'>فَإِنَّهُ بِمَنْزِلَةِ قَوْلِكَ <حرف>أَمَّا الْيَوْمَ فَإِنَّكَ</حرف></مقطع>
  <مقطع هوية='٦٠٤٨٧'>وَلَا تَكُوْنُ <حرف>بَعْدُ</حرف> أَبَدًا مَبْنِيًّا عَلَيْهَا
  إِذَا لَمْ تَكُنْ مُضَاْفَةً</مقطع>
  <مقطع هوية='٦٠٦٩٠'>وَلَا مَبْنِيَّةً عَلَى شَيْءٍ</مقطع>
  <مقطع هوية='١٠٦٣٢'>إِنَّمَا تَكُوْنُ لَغْوًا</مقطع>

  <مقطع هوية='٠٣١٧٢'>وَسَأَلْتُهُ عَنْ <قول هوية='٠٣٢٢٤'>شَدَّ مَا أَنَّكَ ذَاْهِبٌ</قول>
  وَ<قول هوية='٤٠٧١٧'>عَزَّ ما أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='١٧٥٤٩'>فَقَاْلَ هٰذَا بِمَنْزِلَةِ <قول هوية='٤١٨١٥'>حَقًّا أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٩٨٢١٨'>كَمَا تَقُوْلُ <قول هوية='٦١١٦٥'>أَمَّا أَنَّكَ ذَاْهِبٌ</قول>
  بِمَنْزِلَةِ <قول هوية='١٣٣٥٦'>حَقًّا أَنَّكَ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='١٢٤٨١'>وَكَمَا كَاْنَتْ <حرف>لَوْ</حرف> بِمَنْزِلَةِ <حرف>لَوْلَا</حرف></مقطع>
  <مقطع هوية='١٨٦٤٦'>وَلَا تُبْتَدَأُ بَعْدَهَا الَأْسَمَاْءُ سِوَى <حرف>أَنَّ</حرف></مقطع>
  <مقطع هوية='٠٤٠٦٥'>نَحْوُ <حرف>لَوْ أَنَّكَ ذَاْهِبٌ</حرف></مقطع>
  <مقطع هوية='٩٣٩٤٠'>وَ<حرف>لَوْلَا</حرف> تُبْتَدَأُ بَعْدَهَا الَأْسَمَاْءُ</مقطع>
  <مقطع هوية='٣٩٦١٤'>وَ<حرف>لَوْ</حرف> بِمَنْزِلَةِ <حرف>لَوْلَا</حرف></مقطع>
  <مقطع هوية='٥٨١٦٤'>وَإِنْ لَمْ يَجُزْ فِيْهَا مَا يَجُوْزُ فِيْمَا يُشْبِهُهَا</مقطع>
  <مقطع هوية='٩٢٩٦٢'>تَقُوْلُ <قول هوية='٠١٩٧٩'>لَوْ أَنَّهُ ذَهَبَ لَفَعَلْتُ</قول></مقطع>
  <مقطع هوية='١٤٢٣٦'>وَقَاْلَ عَزَّ وَجَلَّ
  <آية هوية='٩٥١٧٧' سورة="١٧" آية="١٠٠">لَّوْ أَنْتُمْ تَمْلِكُوْنَ
  خَزَآئِنَ رَحْمَةِ رَبِّي</آية></مقطع>
  <مقطع هوية='٩٥١٩٦'>وَإِنْ شِئْتَ جَعَلْتَ <حرف>شَدَّ مَا</حرف> وَ<حرف>عَزَّ مَا</حرف>
  كَـ<حرف>نِعْمَ مَا</حرف></مقطع>
  <مقطع هوية='٣٥٤٩٤'>كَأَنَّكَ قُلْتَ <قول هوية='٤٨٦٩١'>نِعْمَ الْعَمَلُ أَنَّكَ تَقُوْلُ الْحَقَّ</قول></مقطع>
  <مقطع هوية='٣٢٧٢٥'>وَسَأَلْتُهُ عَنْ قَوْلِهِ <قول هوية='٨٥١٠٩'>كَمَا أَنَّهُ لَا يَعْلَمُ ذِلَكَ
  فَتَجَاْوَزَ اللهُ عْنُه</قول></مقطع>
  <مقطع هوية='١٥٢٦٢'>وَ<قول هوية='٦٤٧١٥'>هٰذَا حَقٌّ كَمَا أَنَّكَ هَاْهُنَا</قول></مقطع>
  <مقطع هوية='٢٨٢٦٥'>فَزَعَمَ أَنَّ الْعَاْمِلَةَ فِي <حرف>أَنَّ</حرف> الْكَاْفُ</مقطع>
  <مقطع هوية='١٠٤١٠'>وَ<حرف>مَا</حرف> لَغْوٌ إِلَّا أَنَّ <حرف>مَا</حرف>
  لَا تُحْذَفُ مِنْهَا هُنَا</مقطع>
  <مقطع هوية='٦٢٣٦٢'>كَرَاْهِيَةَ أَنْ يَجِيْءَ لَفْظُهَا مِثْلَ لَفْظِ <حرف>كَأَنَّ</حرف></مقطع>
  <مقطع هوية='٨٤٨٧٧'>كَمَا أَلْزَمُوْا النُّوْنَ <حرف>لَأْفَعَلَنَّ</حرف></مقطع>
  <مقطع هوية='٧٣٠١٨'>واللَّاْمَ قَوْلَهُمْ <حرف>إِنْ كَاْنَ لَيَفْعَلُ</حرف></مقطع>
  <مقطع هوية='١٧٥٧٦'>كَرَاْهِيَةَ أَنْ يَلْتَبِسَ اللَّفْظَاْنِ</مقطع>
  <مقطع هوية='٧١٠٢٥'>وَيَدُلُّكَ عَلَى أَنَّ الْكَاْفَ هِيَ الْعَاْمِلَةُ</مقطع>
  <مقطع هوية='٨٩٤٦٩'>قَوْلُهُمْ <قول هوية='٤١٠٦٧'>هٰذَا حَقٌّ مِثْلَ مَا أَنَّكَ هَاْهُنَا</قول></مقطع>
  <مقطع هوية='٥٠٥٦٣'>وَبَعْضُ الْعَرَبُ يَرْفَعُ فِيْمَا حَدَّثَنَا <سند>يُوْنُسُ</سند></مقطع>
  <مقطع هوية='٤١٥١١'>وَزَعَمَ أَنَّهُ يَقُوْلُ أَيْضًا
  <آية هوية='٢٧٢٥٥' سورة="٥١" آية="٢٣">إِنَّهُ لَحَقٌّ مِّثْلَ مَا أَنَّكُمْ تَنْطِقُوْنَ</آية></مقطع>
  <مقطع هوية='١١٦٩٩'>فَلَوْلَا أَنَّ <حرف>مَا</حرف> لَغْوٌ لَمْ يَرْتَفِعْ <حرف>مِثْلُ</حرف></مقطع>
  <مقطع هوية='١٢٤٨٩'>وَإِنْ نَصَبْتَ <حرف>مِثْلَ</حرف> فَـ<حرف>مَا</حرف> أَيْضًا لَغْوٌ</مقطع>
  <مقطع هوية='٠٩٤٣٤'>لِأَنَّكَ تَقُوْلُ <حرف>مِثْلَ أَنَّكَ هَاْهُنَا</حرف></مقطع>
  <مقطع هوية='٢٤٩٩٠'>وَإِنْ جَاْءَتْ <حرف>مَا</حرف> مُسْقَطَةً مِنَ الْكَاْفِ في الشِّعْرِ جَاْزَ</مقطع>
  <مقطع هوية='٣٢٢٠٣'>كَمَا قَاْلَ <شاعر>النَّاْبِغَةُ الْجَعْدِيُّ</شاعر></مقطع>
  <شاهدة هوية='٢٢٢٦٧' شاعر="النَّاْبِغَةُ الْجَعْدِيُّ">
    <بيت>
      <مصراع>قُرُوْمٍ تَسَاْمَى عِنْدَ بَاْبٍ دِفَاْعُهُ</مصراع>
      <مصراع><ثبات>كَأَنْ</ثبات> يُؤْخَذُ الْمَرْءُ الْكَرِيُمُ فَيُقْتَلَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٣٦٠٨'>فَـ<حرف>مَا</حرف> لَا تُحْذَفُ هَاْهُنَا</مقطع>
  <مقطع هوية='٢١٥٤١'>كَمَا لَا تُحْذُفُ فِي الْكَلاْمِ مِنْ <حرف>أَنَّ</حرف></مقطع>
  <مقطع هوية='٩٩٠٦٠'>وَلٰكِنَّهُ جَاْزَ فِي الشِّعْرِ</مقطع>
  <مقطع هوية='٤٧٣٨٦'>كَمَا حُذِفَتْ <حرف>مَا</حرف> الَّتِي فِي <حرف>إِمَّا</حرف>
  كَقَوْلِهِ</مقطع>
  <شاهدة هوية='٢٠٣٨٤'>
    <بيت>
      <مصراع><ثبات>وَإِنْ</ثبات> مِنْ خَرِيْفٍ فَلَنْ يعدما</مصراع>
    </بيت>
  </شاهدة>

