     يعقوب="٤-١٣١"
     رقم="٤٣٣">

  <عنوان>
    <مقطع هوية='٩٠٥٥٦'>هِذَا بَاْبُ مَا جَاْءَ مِنْ الْأَدْوَاْءِ</مقطع>
    <مقطع هوية='٣٠٣٦٦'>عَلَى مِثَاْلِ <فعل هوية='٧٦٣٦٧'>وَجَعَ يَوْجَعُ وَجَعًا وَهُوَ وَجِعٌ</فعل> لِتَقَاْرُبِ الْمَعَاْنِي</مقطع>
  </عنوان>
  <مقطع هوية='٦٤٦٠٠'>وَذٰلِكَ <فعل هوية='٣١٧٥٤'>حَبِطَ يَحْبَطُ حَبَطًا وَهُوَ حَبِطٌ</فعل></مقطع>
  <مقطع هوية='٥٧٩١٧'>وَ<فعل هوية='٤٢٦٩٨'>حَبِجَ يَحْبَجُ حَبَجًا وَهُوَ حَبِجٌ</فعل></مقطع>
  <مقطع هوية='٦١٦٠٤'>وَقَدْ يَجِيْءُ الِاْسْمُ فَعِيْلًا</مقطع>
  <مقطع هوية='٨٩١٠٠'>نَحْوَ <فعل هوية='٦٣٢٤٢'>مَرِضَ يَمْرَضُ مَرَضًا وَهُوَ مَرِيْضٌ</فعل></مقطع>
  <مقطع هوية='٢٥٠٢٥'>وَقَاْلُوْا <فعل هوية='٣٥٦٣١'>سَقِمَ يَسْقَمُ سَقَمًا وَهُوَ سَقِيْمٌ</فعل></مقطع>
  <مقطع هوية='٦٦٦٢٠'>وَقَاْلَ بَعْضُ الْعَرَبِ <حرف>سَقُمَ</حرف></مقطع>
  <مقطع هوية='٥٤٦٩٥'>كَمَا قَاْلُوْا <فعل هوية='٣١٢٦٠'>كَرُمَ كَرَمًا وَهُوَ كَرِيْمٌ</فعل></مقطع>
  <مقطع هوية='٨٨٥٨٢'>وَ<فعل هوية='٤٢٢٠٥'>عَسُرَ عَسَرًا وَهُوَ عَسِيْرٌ</فعل></مقطع>
  <مقطع هوية='٨٤٣٥٥'>وَقَاْلُوْا <حرف>السُّقْمُ</حرف> كَمَا قَاْلُوْا <حرف>الْحُزْنُ</حرف></مقطع>
  <مقطع هوية='٥٠٦٤٢'>وَقَاْلُوْا <فعل هوية='٥٩٤٣٩'>حَزِنَ حَزَنًا وَهُوَ حَزِيْنٌ</فعل></مقطع>
  <مقطع هوية='٥٨٤٣٧'>جَعَلُوْهُ بِمَنْزِلَةِ الْمَرَضِ لِأَنَّهُ دَاْءٌ</مقطع>
  <مقطع هوية='٨٠٠٥٨'>وَقَاْلُوْا <حرف>الْحُزْنُ</حرف> كَمَا قَاْلُوْا <حرف>السُّقْمُ</حرف></مقطع>
  <مقطع هوية='٠٠٦٨٢'>وَقَاْلُوْا فِي مِثْلِ <فعل هوية='٣٢٤٢٤'>وَجِعَ يَوْجَعُ</فعل> فِي بِنَاْءِ الْفِعْلِ وَالْمَصْدَرِ وَقُرْبِ الْمَعْنَى</مقطع>
  <مقطع هوية='٧٠١٨٤'><فعل هوية='٢٨٩٨٦'>وَجَلَ يَوْجَلُ وَجَلًا وَهُوَ وَجِلٌ</فعل></مقطع>
  <مقطع هوية='٤٤٥٦٦'>ومَثْلُهُ مِنْ بَنَاْتِ الْيَاْءِ</مقطع>
  <مقطع هوية='١٢٢١٠'><فعل هوية='٥٣٦٨٥'>رَدِيَ يَرْدَى رَدًى وَهُوَ رَدٍ</فعل></مقطع>
  <مقطع هوية='٥١٨٧٧'>وَ<فعل هوية='٧٩٩٠٢'>لَوِيَ يَلْوَى لَوًى وَهُوَ لَوٍ</فعل></مقطع>
  <مقطع هوية='٠٨٥٥٢'>وَ<فعل هوية='٠٣٠٩٦'>وَجِيَ يَوْجَى وَجًى وَهُوَ وَجٍ</فعل></مقطع>
  <مقطع هوية='٣٨٩٢٥'>وَ<فعل هوية='٧٣٢٩٢'>عَمِيَ قَلْبُهُ يَعْمَى عَمًى وَهُوَ عَمٍ</فعل></مقطع>
  <مقطع هوية='١٤٩٧٧'>إِنَّمَا جَعَلَهُ بَلَاْءً أَصَاْبَ قَلْبَهُ</مقطع>

  <مقطع هوية='٧٨٤٥٤'>وَجَاْءَ مَا كَاْنَ مِنْ الذُّعْرِ وَالْخَوْفِ عَلَى هٰذَا الْمِثَاْلِ</مقطع>
  <مقطع هوية='٥٠٣٩٨'>لِأَنَّهُ دَاْءٌ قَدْ وَصَلَ إلَى فُؤَاْدِهِ</مقطع>
  <مقطع هوية='٠٤٣٤٤'>كَمَا وَصَلَ مَا ذَكَرْنَا إلَى بَدَنِهِ</مقطع>
  <مقطع هوية='١٤٢٨٤'>وَذٰلِكَ قَوْلُك <فعل هوية='٢٦٢٠٩'>فَزِعْتُ فَزَعًا وَهُوَ فَزِعٌ</فعل></مقطع>
  <مقطع هوية='٥٦٥٦٥'>وَ<فعل هوية='١٨٤٢٥'>فَرِقَ يَفْرَقُ فَرَقًا وَهُوَ فَرِقٌ</فعل></مقطع>
  <مقطع هوية='٧٧٥٥٨'>وَ<فعل هوية='٠٥٩١٦'>وَجِلَ يَوْجَلُ وَجَلًا وَهُوَ وَجِلٌ</فعل></مقطع>
  <مقطع هوية='٥٨٠٨٤'>وَ<فعل هوية='٠٩١٧٧'>وَجَرَ وَجَرًا وَهُوَ وَجِرٌ</فعل></مقطع>
  <مقطع هوية='٠٥٥١٥'>وَقَاْلُوْا <حرف>أَوْجَرَ</حرف> فَأَدْخَلُوْا <مثال>أَفْعَلُ</مثال> هَهُنَا عَلَى <مثال>فَعِلٍ</مثال></مقطع>
  <مقطع هوية='٣١٣٤٥'>لِأَنَّ <مثال>فَعِلًا</مثال> وَ<مثال>أَفْعَلُ</مثال>
  قَدْ يَجْتَمِعَاْنِ</مقطع>
  <مقطع هوية='٣٠٧٩٣'>كَمَا يَجْتَمِعُ <مثال>فَعْلَاْنُ</مثال> وَ<مثال>فَعِلٌ</مثال></مقطع>
  <مقطع هوية='٨٥١٤١'>وَذٰلِكَ قَوْلُك <حرف>شَعِثٌ</حرف> وَ<حرف>أَشْعَثُ</حرف></مقطع>
  <مقطع هوية='٦١٧٩٣'>وَ<حرف>حَدِبٌ</حرف> وَ<حرف>أَحْدَبُ</حرف></مقطع>
  <مقطع هوية='٢٩٥١٦'>وَ<حرف>جَرِبٌ</حرف> وَ<حرف>أَجْرَبُ</حرف></مقطع>
  <مقطع هوية='٠٦٥٤٠'>وَهُمَا فِي الْمَعْنَى نَحْوٌ مِنَ الْوَجَعِ</مقطع>
  <مقطع هوية='٢٤٦١٣'>وَقَاْلُوْا <حرف>كَدِرٌ</حرف> وَ<حرف>أَكْدَرُ</حرف></مقطع>
  <مقطع هوية='١١٤٠٢'>وَ<حرف>حَمِقٌ</حرف> وَ<حرف>أَحْمَقُ</حرف></مقطع>
  <مقطع هوية='٢١٦٧٥'>وَ<حرف>قَعِسٌ</حرف> وَ<حرف>أَقْعَسُ</حرف></مقطع>
  <مقطع هوية='٧٠٣٥٠'>فَـ<مثال>أَفْعَلُ</مثال> دَخَلَ فِي هٰذَا الْبَاْبِ</مقطع>
  <مقطع هوية='٤٧١١٣'>كَمَا دَخَلَ <مثال>فَعِلٌ</مثال> فِي بَاْبِ <مثال>فَعْلَاْنَ</مثال></مقطع>
  <مقطع هوية='٠٤٠٧٠'>وَيَقُوْلُوْنَ <حرف>خَشِنٌ</حرف> وَ<حرف>أَخْشَنُ</حرف></مقطع>
  <مقطع هوية='٢٩٥١٢'>وَيَقُوْلُوْنَ خَشِنٌ وَأَخْشَنَ</مقطع>
  <مقطع هوية='٩٥٩٢١'>
    وَاعَلَمْ أَنَّ <حرف>فَرِقْتُهُ</حرف> وَ<حرف>فَزِعْتُهُ</حرف> إِنَّمَا مَعْنَاْهُمَا
  <حرف>فَرِقْتُ مِنْهُ</حرف>
  </مقطع>
  <مقطع هوية='٩٣٧٦٩'>وَلَكِنَّهُمْ حَذَفُوْا <حرف>مِنْهُ</حرف></مقطع>
  <مقطع هوية='٩٦٠٩٠'>كَمَا قَاْلُوْا <حرف>أَمَرْتُكَ الْخَيْرَ</حرف></مقطع>
  <مقطع هوية='٣٦٦٥٤'>وَإِنَّمَا يُرِيْدُوْنَ <حرف>بِالْخَيْرَ</حرف></مقطع>
  <مقطع هوية='٠٠٢٢٠'>وَقَاْلُوْا <فعل هوية='٩٣٨٣٢'>خَشْيَتُهُ خَشْيَةً وَهُوَ خَاْشٍ</فعل></مقطع>
  <مقطع هوية='٦١١١٣'>كَمَا قَاْلُوْا <فعل هوية='١٧٢٩٧'>رَحِمَ وَهُوَ رَاْحِمٌ</فعل></مقطع>
  <مقطع هوية='٦٠٣٤٢'>فَلَمْ يَجِيْئُوْا بِاللَّفْظِ كَلَفْظِ مَا مَعْنَاْهُ كَمَعْنَاْهُ</مقطع>
  <مقطع هوية='٠٠١٢٠'>وَلَكِنْ جَاْءُوْا بِالْمَصْدَرِ وَالِاسْمِ عَلَى مَا بِنَاْءُ فِعْلِهِ كَبِنَاْءِ فَعْلِهِ</مقطع>
  <مقطع هوية='٢١٧٩٠'>وَجَاْءُوْا بِضِدِّ مَا ذَكَرْنَا عَلَى بِنَاْئِهِ</مقطع>
  <مقطع هوية='٥١٩٧١'>قَاْلُوْا <فعل هوية='٣٩٨٣٣'>أَشِرَ يَأْشَرُ أَشَرًا وَهُوَ أَشِرٌ</فعل></مقطع>
  <مقطع هوية='٨١٤٩٩'>وَ<فعل هوية='٢٩٤٧٢'>بَطِرَ يَبْطَرُ بَطَرًا وَهُوَ بَطِرٌ</فعل></مقطع>
  <مقطع هوية='٠٢٧٩٤'>وَ<فعل هوية='١٤٤٩٢'>فَرَحَ يَفْرَحُ فَرَحًا وَهُوَ فَرِحٌ</فعل></مقطع>
  <مقطع هوية='٤١٤١٠'>وَ<فعل هوية='٨٧٨٤٢'>جَذِلَ يَجْذَلُ جَذَلًا وَهُوَ جَذِلٌ</فعل></مقطع>
  <مقطع هوية='٩٩٣٠٢'>وَقَاْلُوْا <حرف>جَذْلَاْنُ</حرف></مقطع>
  <مقطع هوية='٠٨٤٨٥'>كَمَا قَاْلُوْا <حرف>كَسْلَاْنُ</حرف> وَ<حرف>كَسِلٌ</حرف></مقطع>
  <مقطع هوية='٠٧٤١١'>وَ<حرف>سَكْرَاْنُ</حرف> وَ<حرف>سَكِرٌ</حرف></مقطع>

  <مقطع هوية='٣٦٠٥٣'>وَقَاْلُوْا <فعل هوية='٠٥١٨٦'>نَشِطَ يَنْشَطُ وَهُوَ نَشِيْطٌ</فعل> كَمَا قَاْلُوْا <حرف>الْحَزِيْنُ</حرف></مقطع>
  <مقطع هوية='٠٩٦٠٤'>وَقَاْلُوْا <حرف>النَّشَاْطُ</حرف> كَمَا قَاْلُوْا <حرف>السَّقَاْمُ</حرف></مقطع>
  <مقطع هوية='٢٠٧٧٠'>وَجَعَلُوْا <حرف>السَّقَاْمَ</حرف> وَ<حرف>السَّقِيْمَ</حرف>
  كَـ<حرف>الْجَمَاْلِ</حرف> وَ<حرف>الْجَمِيْلِ</حرف></مقطع>
  <مقطع هوية='٩٩٧٦٤'>وَقَاْلُوْا <فعل هوية='٨٨٢٥٤'>سَهَكَ يَسْهَكُ سَهَكًا وَهُوَ سَهِكٌ</فعل></مقطع>
  <مقطع هوية='٣٤٢٣٠'>وَ<فعل هوية='٠٣٦٥٥'>قَنِمَ قَنَمًا وَهُوَ قَنِمٌ</فعل></مقطع>
  <مقطع هوية='٩٤٧٨٣'>جَعَلُوْهُ كَالدَّاْءِ لِأَنَّهُ عَيْبٌ</مقطع>
  <مقطع هوية='٨١٤٧٨'>وَقَاْلُوْا <حرف>قَنَمَةٌ</حرف> وَ<حرف>سَهَكَةٌ</حرف></مقطع>
  <مقطع هوية='١٩٧١٨'>وَقَاْلُوْا <حرف>عَقُرَتْ عُقْرًا</حرف> [<حرف>عَقَرْتُ عَقْرًا</حرف>]</مقطع>
  <مقطع هوية='٨٣٠٣٥'>كَمَا قَاْلُوْا <حرف>سَقُمَتْ سُقْمًا</حرف></مقطع>
  <مقطع هوية='٦٩٨٠٨'>وَقَاْلُوْا <حرف>عَاْقِرُ</حرف> كَمَا قَاْلُوْا <حرف>مَاْكِثٌ</حرف></مقطع>
  <مقطع هوية='٧٥٠٥٩'>وَقَاْلُوْا <فعل هوية='١٩٦٨٧'>خَمِطَ خَمَطًا وَهُوَ خَمِطٌ</فعل> فِي ضِدِّ الْقَنَمِ</مقطع>
  <مقطع هوية='٤١٦١١'>وَالْقَنَمُ السَّهَكُ</مقطع>
  <مقطع هوية='٧٧٣٣٢'>وَقَدْ جَاْءَ عَلَى <مثال>فَعَلَ يَفْعَلُ وَهُوَ فَعِلٌ</مثال> أَشْيَاْءُ تَقَاْرَبَتْ مَعَاْنِيْهَا</مقطع>
  <مقطع هوية='٧٧٩٤٧'>لِأَنَّ جُمْلَتَهَا هَيْجٌ</مقطع>
  <مقطع هوية='٠٧٤٦١'>وَذٰلِكَ قَوْلُهُمْ <فعل هوية='٠٨٧١٤'>أَرِجَ يَأْرَجُ أَرَجًا وَهُوَ أَرِجٌ</فعل></مقطع>
  <مقطع هوية='٤٥٣١٩'>وَإِنَّمَا أَرَاْدَ تَحَرُّكَ الرِّيْحِ وَسُطُوْعِهَا</مقطع>
  <مقطع هوية='٢٥٣٥١'>وَ<فعل هوية='١٧٢٩٩'>حَمِسَ يَحْمَسُ حَمَسًا وَهُوَ حَمِسٌ</فعل></مقطع>
  <مقطع هوية='٧٣٤١٩'>وَذٰلِكَ حِيْنَ يَهِيْجُ وَيَغْضَبُ</مقطع>
  <مقطع هوية='٤٤٩٢٥'>وَقَاْلُوْا <حرف>أَحْمَسُ</حرف> كَمَا قَاْلُوْا <حرف>أَوْجَرُ</حرف></مقطع>
  <مقطع هوية='٠٢٦١٧'>وَصَاْرَ <مثال>أَفْعَلُ</مثال> هَهُنَا بِمَنْزِلَةِ <مثال>فَعْلَاْنُ</مثال> وَ<حرف>غَضْبَاْنُ</حرف></مقطع>
  <مقطع هوية='٠٨١٢٢'>وَقَدْ يَدْخُلُ <مثال>أَفْعَلُ</مثال> عَلَى <مثال>فَعْلَاْنَ</مثال></مقطع>
  <مقطع هوية='٩٥٧٠٨'>كَمَا دَخَلَ <مثال>فَعِلٌ</مثال> عَلَيْهِمَا</مقطع>
  <مقطع هوية='٣٧٣٨٠'>فَلَا يُفَاْرِقُهُمَا فِي بِنَاْءِ الْفِعْلِ وَالْمَصْدَرِ كَثِيْرًا</مقطع>
  <مقطع هوية='٨١٦١١'>وَلِشِبْهِ <مثال>فَعْلَاْنَ</مثال> بِمُؤَنَّثِ <مثال>أَفْعَلَ</مثال></مقطع>
  <مقطع هوية='٨٢١٠٠'>وَقَدْ بَيَّنَّا ذٰلِكَ فِيْمَا يَنْصَرِفُ وَمَا لَا يَنْصَرْفُ</مقطع>

  <مقطع هوية='٤٣٠٠٧'>وَزَعَمَ أَبُو الْخَطَّاْبِ أَنَّهُمْ يَقُوْلُوْنَ <قول هوية='١٥٨٦٠'>رَجُلٌ أَهْيَمُ وَهَيْمَاْنُ</قول></مقطع>
  <مقطع هوية='١٠٩٨٤'>يُرِيْدُوْنَ شَيْئًا وَاْحِدًا وَهُوَ الْعَطْشَاْنُ</مقطع>
  <مقطع هوية='٧٢٢٩٩'>وَقَاْلُوْا <فعل هوية='٧٦٦٨٦'>سَلِسَ يَسْلَسُ سَلَسًا وَهُوَ سَلِسٌ</فعل></مقطع>
  <مقطع هوية='٧٥٦٦٢'>وَ<فعل هوية='٨٨٥٣٠'>قَلِقَ يَقْلَقُ قَلَقًا وَهُوَ قَلِقٌ</فعل></مقطع>
  <مقطع هوية='٦٢٦٥٧'>وَ<فعل هوية='١٧٨٧٢'>نَزِقَ يَنْزَقُ نَزَقًا وَهُوَ نَزِقٌ</فعل></مقطع>
  <مقطع هوية='٨٢٠٣٧'>جَعِلُوْا هٰذَا حَيْثُ كَاْنَ خِفَّةً وَتَحَرُّكًا مِثْلَ الْحَمَسِ وَالْأَرَجِ</مقطع>
  <مقطع هوية='٧٤٦٠٥'>وَمِثْلُهُ <فعل هوية='٨٤١٣٢'>غَلِقَ يَغْلَقُ غَلَقًا</فعل> لِأَنَّهُ طَيْشٌ وَخِفَّةٌ</مقطع>
  <مقطع هوية='١٥٢٤٥'>وَكَذٰلِكَ الْغَلَقُ فِي غَيْرِ الْأَنَاْسِيِّ لِأَنَّهُ قَدْ خَفَّ مِنْ مَكَاْنَهِ</مقطع>
  <مقطع هوية='٩٩٩٩٤'>وقَدْ بَنَوْا أَشْيَاْءَ عَلَى <مثال>فَعَلَ يَفْعَلُ فَعَلًا وَهُوَ فَعِلٌ</مثال> لِتَقَاْرُبِهَا فِي الْمَعْنَى</مقطع>
  <مقطع هوية='٣٥٥١٥'>وَذٰلِكَ مَا تَعَذَّرَ عَلَيْكَ وَلَمْ يَسْهُلْ</مقطع>
  <مقطع هوية='٨١٦٩١'>وَذٰلِكَ <فعل هوية='٤٠٣٢٥'>عَسِرَ يَعْسَرُ عَسَرًا وَهُوَ عَسِرٌ</فعل></مقطع>
  <مقطع هوية='٣٨٣٣٧'>وَ<فعل هوية='٨٥٩٧٤'>شَكِسَ يَشْكَسُ شَكَسًا وَهُوَ شَكِسٌ</فعل></مقطع>
  <مقطع هوية='٦٠٣٢١'>وَقَاْلُوْا <حرف>الشَّكَاْسَةُ</حرف> كَمَا قَاْلُوْا <حرف>السَّقَاْمَةُ</حرف></مقطع>
  <مقطع هوية='٢٣٠٩١'>وَقَاْلُوْا <فعل هوية='١٤٨٢٠'>لَقِسَ يَلْقَسُ لَقَسًا وَهُوَ لَقِسٌ</فعل></مقطع>
  <مقطع هوية='٢٦٠٩١'>وَ<فعل هوية='٣٨٣٨٧'>لَحَزَ يَلْحَزُ لَحَزًا وَهُوَ لَحِزٌ</فعل></مقطع>
  <مقطع هوية='٧٢١٠١'>فَلَمَّا صَاْرَتْ هَذِهِ الْأَشْيَاْءُ مَكْرُوْهَةً عِنْدَهُمْ</مقطع>
  <مقطع هوية='٦١٨٦٥'>صَاْرَتْ بِمَنْزِلَةِ الْأَوْجَاْعِ</مقطع>
  <مقطع هوية='١٢٦٢٥'>وَصَاْرَ بِمَنْزِلَةِ مَا رُمُوْا بِهِ مِنَ الْأَدْوَاْءِ</مقطع>
  <مقطع هوية='٠٢٩٨٦'>وَقَدْ قَاْلُوْا <فعل هوية='٦٣٨٦٤'>عَسُرَ الْأَمْرُ وَهُوَ عَسِيْرٌ</فعل></مقطع>
  <مقطع هوية='٢١١٢١'>كَمَا قَاْلُوْا <فعل هوية='٨٥٠٩٢'>سَقُمَ وَهُوَ سَقِيْمٌ</فعل></مقطع>
  <مقطع هوية='٥١٥٨٥'>وَقَاْلُوْا <فعل هوية='٥٠٣٠٤'>نَكِدَ يَنْكَدُ نَكَدًا وَهُوَ نَكِدٌ</فعل></مقطع>
  <مقطع هوية='٢٨٥٤٣'>وَقَاْلُوْا <حرف>أَنْكَدُ</حرف> كَمَا قَاْلُوْا <حرف>أَجْرَبُ</حرف>
  وَ<حرف>جَرِبٌ</حرف></مقطع>
  <مقطع هوية='٣٠٧٧٦'>وَقَاْلُوْا <فعل هوية='٨٤٥٧٧'>لَحَجَ يَلْحَجُ لَحَجًا وَهُوَ لَحِجٌ</فعل></مقطع>
  <مقطع هوية='٢٨٦٧٥'>لِأَنَّ مَعْنَاْهُ قَرِيْبٌ مِنْ مَعْنَى الْعَسِرِ</مقطع>

