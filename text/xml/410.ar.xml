  <عنوان>
    <مقطع هوية='٤٣٧٢٢'>هٰذَا بَاْبُ الْمَقْصُوْرِ وَالْمَمْدُوْدِ</مقطع>
  </عنوان>
  <مقطع هوية='٧٠٥٧٤'>وَهُمَا فِي بَنَاْتِ الْيَاْءِ وَالْوَاْوِ الَّتِي هِيَ لَاْمَاْتٌ</مقطع>
  <مقطع هوية='٦١٠٦٣'>وَمَا كَاْنَتْ الْيَاْءُ فِي آخِرِهِ وَأُجْرِيَتْ مَجْرَى الَّتِي مِنْ نَفْسِ الْحَرْفِ</مقطع>
  <مقطع هوية='٤١٦٩٢'>فَالْمَنْقُوْصُ كُلُّ حَرْفٍ مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ</مقطع>
  <مقطع هوية='٥٠٤١٥'>وَقَعَتْ يَاْؤُهُ أَوْ وَاوُهُ بَعْدَ حَرْفٍ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٨١١١٦'>وَإِنَّمَا نُقْصَاْنُهُ أَنْ تُبْدَلَ الْأَلِفُ مَكَاْنَ الْيَاْءِ وَالْوَاْوِ</مقطع>
  <مقطع هوية='٢٨٨٦٧'>فَلَا يَدْخُلُهَا نَصَبٌ وَلَا رَفْعٌ وَلَا جَرٌّ</مقطع>
  <مقطع هوية='٧٧٣٣٩'>وَأَشْيَاْءُ يُعْلَمُ أَنَّهَا مَنْقُوْصَةٌ</مقطع>
  <مقطع هوية='٩٤٥٠٢'>لِأَنَّ نَظَاْئِرَهَا مِنْ غَيْرِ الْمُعْتَلِّ إِنَّمَا تَقَعُ أَوَاْخِرُهُنَّ بَعْدَ حَرْفٍ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٥٦٦٠٥'>وَذٰلِكَ نَحْوُ <حرف>مُعْطًى</حرف> وَ<حرف>مُشْتَرًى</حرف> وَأَشْبَاْهُ ذٰلِكَ</مقطع>
  <مقطع هوية='٩٣٨١٦'>لِأَنَّ <حرف>مُعْطًى</حرف> <مثال>مُفْعَلٌ</مثال> وَهُوَ مِثْلُ <حرف>مُخْرَجٍ</حرف></مقطع>
  <مقطع هوية='٠٦٦١٧'>فَالْيَاْءُ بِمَنْزِلَةِ الْجِيْمِ وَالرَّاْءُ بِمَنْزِلَةِ الطَّاْءِ</مقطع>
  <مقطع هوية='٥٣٦٥٢'>فَنَظَاْئِرُ ذَا تَدُلُّكَ عَلَى أَنَّهُ مَنْقُوْصٌ</مقطع>
  <مقطع هوية='٨١٨٦٠'>وَكَذٰلِكَ <حرف>مُشْتَرًى</حرف></مقطع>
  <مقطع هوية='٤٤٢٦٣'>إِنَّمَا هُوَ <مثال>مُفْتَعَلٌ</مثال> وَهُوَ مِثْلُ <حرف>مُعْتَرَكٍ</حرف></مقطع>
  <مقطع هوية='٨٦٠٣٨'>فَالرَّاْءُ بِمَنْزِلَةِ الرَّاْءِ وَالْيَاْءُ بِمَنْزِلَةِ الْكَاْفِ</مقطع>
  <مقطع هوية='٠٥٩٨٢'>وَمِثْلُ هٰذَا <حرف>مَغْزًى</حرف> وَ<حرف>مَلْهًى</حرف></مقطع>
  <مقطع هوية='٤١٧٠٦'>إِنَّمَا هُمَا <مثال>مَفْعَلٌ</مثال> وَإِنَّمَا هُمَا بِمَنْزِلَةِ <حرف>مَخْرَجٍ</حرف></مقطع>
  <مقطع هوية='٣٥٧٨٥'>فَإِنَّمَا هِيَ وَاوٌ وَقَعَتْ بَعْدَ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٣٨٤٢٠'>كَمَا أَنَّ الْجِيْمَ وَقَعَتْ بَعْدَ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٨٦٧٠٠'>وَهُمَا لَاْمَاْنِ</مقطع>
  <مقطع هوية='٠٦١٣٢'>فَأَنْتَ تَسْتَدِلُّ بِذَا عَلَى نُقْصَاْنِهِ</مقطع>
  <مقطع هوية='٩٨٥١٤'>وَمِثْلُ ذٰلِكَ الْمَفْعُوْلُ مِنْ <حرف>سَلْقَيْتُهُ</حرف></مقطع>
  <مقطع هوية='٦٥٦٢٣'>وَذٰلِكَ قَوْلُكَ <حرف>مُسْلَقًى</حرف> وَ<حرف>مُسْلَنْقًى</حرف></مقطع> <!--FIXME: muslaqan looks wrong -->
  <مقطع هوية='٥٩٧٩٠'>وَالدَّلِيْلُ عَلَى ذٰلِكَ أَنَّهُ لَوْ كَاْنَ بَدَلَ هَذِهِ الْيَاْءَ الَّتِي فِي <حرف>سَلْقَيْتُ</حرف> حَرْفٌ غَيْرُ الْيَاْءِ</مقطع>
  <مقطع هوية='٢٤٤٨٣'>لَمْ تَقَعْ إِلَّا بَعْدَ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٧١٩٨٩'>فَكَذٰلِكَ هٰذَا وَأَشْبَاْهُهُ</مقطع>

  <مقطع هوية='٨١٦٤٢'>وَمِمَّا تَعْلَمُ أَنَّهُ مَنْقُوْصٌ</مقطع>
  <مقطع هوية='٧٤٣٣١'>كُلُّ شَيْءٍ كَاْنَ مَصْدَرًا لِـ<مثال>فَعَلَ يَفْعُلُ</مثال> وَكَاْنَ الِاسْمُ عَلَى <مثال>أَفْعَلَ</مثال></مقطع>
  <مقطع هوية='٨٣٧٣٥'>لِأَنَّ ذٰلِكَ فِي غَيْرِ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ</مقطع>
  <مقطع هوية='٣٠٢٠٦'>إِنَّمَا يَجِيْءُ عَلَى مِثَاْلِ <مثال>فَعَلٍ</مثال></مقطع>
  <مقطع هوية='١٤٢٣٢'>وَذٰلِكَ قَوْلُكَ لِلْأَحْوَلِ <حرف>بِهِ حَوَلٌ</حرف></مقطع>
  <مقطع هوية='٠٠٨٠١'>وَلِلْأَعْوَرِ <حرف>بِهِ عَوَرٌ</حرف></مقطع>
  <مقطع هوية='٧٣٣١٠'>وَلِلآدَرِ <حرف>بِهِ آدَرٌ</حرف></مقطع>
  <مقطع هوية='٣٣٦٣٦'>وَللأَشْتَرِ <حرف>بِهِ شَتَرٌ</حرف></مقطع>
  <مقطع هوية='١٤٧٦٣'>وَلِلْأَقْرَعِ <حرف>بِهِ قَرَعٌ</حرف></مقطع>
  <مقطع هوية='٥٧٨٤٠'>وَلِلأَصْلَعِ <حرف>بِهِ صَلَعٌ</حرف></مقطع>
  <مقطع هوية='٣٣٢٦٢'>وَهٰذَا أَكْثَرُ مِنْ أَنْ أَحْصِيَهُ لَكَ</مقطع>

  <مقطع هوية='٠٠٧٧٦'>فَهٰذَا يَدُلُّكَ عَلَى أَنَّ الَّذِي مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ مَنْقُوْصٌ لِأَنَّهُ <مثال>فَعَلٌ</مثال></مقطع>
  <مقطع هوية='١١٢٣٨'>وَذٰلِكَ قَوْلُكَ لِلْأَعْشَى <حرف>بِهِ عَشًى</حرف></مقطع>
  <مقطع هوية='٨٢٧٠٩'>وَلِلْأَعْمَى <حرف>بِهِ عَمًى</حرف></مقطع>
  <مقطع هوية='٣٤٣١٥'>وَلِلأَقْنَى <حرف>بِهِ قَنًى</حرف></مقطع>
  <مقطع هوية='٤٤٤٥٣'>فَهٰذَا يَدُلُّكَ عَلَى أَنَّهُ مَنْقُوْصٌ</مقطع>
  <مقطع هوية='١٧٠٠٧'>كَمَا يَدُلُّكَ عَلَى أَنَّ نَظِيْرَ كُلِّ شَيْءٍ وَقَعَتْ جِيْمُهُ بَعْدَ فَتْحَةٍ مِنْ <حرف>أَخْرَجْتُ</حرف> مَنْقُوْصٌ مِنْ <حرف>أَعْطَيْتُ</حرف></مقطع>
  <مقطع هوية='٧٧٤١١'>لِأَنَّهُمَا <مثال>أَفَعَلْتُ</مثال></مقطع>
  <مقطع هوية='٠٠٠٩١'>وَلِكُلِّ شَيْءٍ مِنْ <حرف>أَخْرَجْتُ</حرف> نَظِيْرٌ مِنْ <حرف>أَعْطَيْتُ</حرف></مقطع>
  <مقطع هوية='٩٩٠٦٧'>وَمِمَّا تَعْلَمُ أَنَّهُ مَنْقُوْصٌ</مقطع>
  <مقطع هوية='٣٠٤٠٧'>أَنْ تَرَى الْفِعْلَ  <مثال ج="فعلَ">فَعِلَ</مثال> <مثال ج="يَفعلُ">يَفْعَلُ</مثال> وَالِاسْمُ مِنْهُ <مثال ج="فعلٌ">فَعِلٌ</مثال></مقطع>
  <مقطع هوية='٥٨٧٦٥'>فَإِذَا كَاْنَ الشَّيْءُ كَذٰلِكَ عَرَفْتَ أَنَّ مَصْدَرَهُ مَنْقُوْصٌ لِأَنَّهُ <مثال ج="فعلٌ">فَعَلٌ</مثال></مقطع>
  <مقطع هوية='٩٣٧٢٤'>يَدُلُّكَ عَلَى ذٰلِكَ نَظَاْئِرُهُ مِنْ غَيْرِ الْمُعْتَلِّ</مقطع>
  <مقطع هوية='٠٢٧٧٣'>وَذٰلِكَ قَوْلُكَ <فعل>فَرِقَ</فعل> <فعل>يَفْرَقُ</فعل> <مصدر>فَرَقًا</مصدر> وَهُوَ <صفة>فَرِقٌ</صفة></مقطع>
  <مقطع هوية='٧٨٦٨٣'>وَ<فعل>بَطِرَ</فعل> <فعل>يَبْطَرُ</فعل> <مصدر>بَطَرًا</مصدر> وَهُوَ <صفة>بَطِرٌ</صفة></مقطع>
  <مقطع هوية='٠٢٤٥٧'>وَ<فعل>كَسِلَ</فعل> <فعل>يَكْسَلُ</فعل> <مصدر>كَسَلًا</مصدر> وَهُوَ <صفة>كَسِلٌ</صفة></مقطع>
  <مقطع هوية='٠٥٠٣٣'>وَ<فعل>لَحِجَ</فعل> <فعل>يَلْحَجُ</فعل> <مصدر>لَحَجًا</مصدر> وَهُوَ <صفة>لَحِجٌ</صفة></مقطع>
  <مقطع هوية='٩١٧٠٠'>وَ<فعل>أَشِرَ</فعل> <فعل>يَأْشَرُ</فعل> <مصدر>أَشَرًا</مصدر> وَهُوَ <صفة>أَشِرٌ</صفة></مقطع>
  <مقطع هوية='٤٧٣٢٧'>وَذٰلِكَ أَكْثَرُ مِنَ أَنْ أَذْكُرَهُ لَكِ</مقطع>
  <مقطع هوية='٨٨٧٦٥'>فَمَصْدَرُ ذَا مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ عَلَى مِثَاْلِ <مثال>فَعَلٍ</مثال></مقطع>
  <مقطع هوية='٨٤١١٤'>وَإِذَا كَاْنَ <مثال>فَعَلٌ</مثال> فَهُوَ يَاْءٌ أَوْ وَاوٌ وَقَعَتْ بَعْدَ فَتْحَةٍ</مقطع>
  <مقطع هوية='٨٧٥٠٦'>وَذٰلِكَ قَوْلُكَ <فعل>هَوِيَ</فعل> <فعل>يَهْوَى</فعل> <مصدر>هَوًى</مصدر> وَهُوَ <صفة>هَوٍ</صفة></مقطع>
  <مقطع هوية='٧٣٧٢٦'>وَ<قول هوية='٤٩٦٤٠'>رَدِيْتَ تَرْدَى رَدًى وَهُوَ رَدٍ وَهُوَ الرَّدَى</قول></مقطع>
  <مقطع هوية='٥٠٩٨٦'>وَ<قول هوية='٦٦٦٦١'>صَدِيْتَ تَصْدَى صَدًى وَهُوَ صَدٍ وَهُوَ الصَّدَىْ</قول> وَهْوَ الْعَطَشِ</مقطع>
  <مقطع هوية='١٥٤٤٤'>وَ<قول هوية='٧٢٧٦٤'>لَوِيَ يَلْوَى لَوًى وَهُوَ لَوٍ وَهُوَ اللَّوَى</قول></مقطع>
  <مقطع هوية='٠١١٠١'>وَ<قول هوية='٢٦٤٦١'>كَرِيْتَ تَكْرَى كَرًى وَهُوَ كَرٍ وَهُوَ الْكَرَى</قول> وَهُوَ النُّعَاْسُ</مقطع>
  <مقطع هوية='٣٧٦٣٤'>وَ<قول هوية='١٠٨٨٠'>غَوِيَ الصَّبِيُّ يَغْوَى غَوًى وَهُوَ غَوٍ وَهُوَ الْغَوَى</قول></مقطع>
  <مقطع هوية='٢٩٩٧٦'>وَإِذَا كَاْنَ <مثال>فَعَلَ يَفْعَلُ</مثال> وَالِاسْمُ <مثال>فَِعْلَاْنُ</مثال> فَهُوَ أَيْضًا مَنْقُوْصٌ</مقطع>
  <مقطع هوية='٠٥٨٨٢'>أَلَا تَرَى أَنَّ نَظَاْئِرَهُ مِنْ غَيْرِ الْمُعْتَلِّ تَكُوْنُ <مثال>فَعَلًا</مثال></مقطع>
  <مقطع هوية='٥٥٨٥٧'>وَذٰلِكَ قَوْلُكَ لِلْعَطْشَاْنِ</مقطع>
  <مقطع هوية='٣٥٩١١'><حرف>عَطِشَ يَعْطَشُ عَطَشًا وَهْوَ عَطْشَاْنُ</حرف></مقطع>
  <مقطع هوية='٩٦٨٠٧'>وَ<قول هوية='٣١٨١٥'>غَرِثَ يَغْرَثُ غَرَثًا وَهُوَ غَرْثَاْنُ</قول></مقطع>
  <مقطع هوية='١٨١٤٩'>وَ<قول هوية='٣٠٦١٤'>ظَمِئَ يَظْمَأُ ظَمَأً وَهُوَ ظَمْآنُ</قول></مقطع>
  <مقطع هوية='٠٩٦٣٤'>فَكَذٰلِكَ مَصْدَرُ نَظِيْرِ ذَا مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ</مقطع>
  <مقطع هوية='٢١٢٤٧'>لِأَنَّهُ <مثال>فَعَلٌ</مثال> كَمَا أَنَّ ذَا <مثال>فَعَلٌ</مثال></مقطع>
  <مقطع هوية='٥٦٧٣٣'>حَيْثُ كَاْنَ <مثال>فَِعْلَاْنُ</مثال> لَهُ <مثال>فَِعْلَى</مثال> وَكَاْنَ <مثال>فَعِلَ يَفْعَلُ</مثال></مقطع>
  <مقطع هوية='٨١٥٥٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٧٠٥٣٣'>طَوِيَ يَطْوَى طَوًى</قول> وَ<قول هوية='٨٧١٦٥'>صَدِيَ يَصْدَى صَدَىً وَهُوَ صَدْيَاْنُ</قول> وَقَاْلُوْا <قول هوية='٣٣١٣٧'>غَرِيَ يَغْرَى غَرًى وَهُوَ غَرٍ</قول> وَ<حرف>الْغرَاْءُ</حرف>  شَاْذٌّ مَمْدُوْدٌ كَمَا قَاْلُوْا  <حرف>الْظَّمَاْءُ</حرف>
  </مقطع>
  <مقطع هوية='٨٣٣٤٧'>وَقَاْلُوْا <قول هوية='٠٠٣٢٦'>رَضِيَ يَرْضَى وَهُوَ رَاْضٍ وَهُوَ الْرِّضَا</قول>
  </مقطع>
  <مقطع هوية='٥٥٨٣٠'>وَنَظِيْرُهُ <قول هوية='٠٥٦٢٥'>سَخِطَ يَسْخَطُ سَخَطًا وَهُوَ سَاْخِطٌ</قول>
  </مقطع>
  <مقطع هوية='٨٠٠٧٠'>وَكَسَرُوْا الْرَّاْءَ كَمَا قَاْلُوْا  <حرف>الْشِّبَعُ</حرف>  فَلَمْ يَجِيْئُوْا بِهِ عَلَى نَظَاْئِرِهِ وَذَا لَا يُجْسَرُ عَلَيْهِ إِلَّا بِسَمَاْعٍ</مقطع>
  <مقطع هوية='٠٠١٨٢'>وَسَوْفَ نُبَيِّنُ ذٰلِكَ إِنْ شَاْءَ اللهُ وَأَمَّا الْغَرَاْءُ فَشَاْذٌّ</مقطع>
  
  <مقطع هوية='٢٢٩٤٣'>وَقَاْلُوْا <قول هوية='٠٤٤١٧'>بَدَا لَهُ يَبْدُو لَهُ بَدًا</قول>
  </مقطع>
  <مقطع هوية='٩٣٥٥١'>وَنَظِيْرُهُ <قول هوية='٧٨١٨٣'>حَلَبَ يَحْلُبُ حَلَبًا</قول>
  </مقطع>
  <مقطع هوية='٩٢٦٣٧'>وَهٰذَا يُسْمَعُ وَلَا يُجْسَرُ عَلَيْهِ وَلَكِنْ يُجَاْءُ بِنَظَاْئِرِهِ بَعْدَ الْسَّمْعِ</مقطع>
  <مقطع هوية='٥٠٩٢٩'>وَمِنَ الْكَلَاْمِ مَا لَا يُدْرَى أَنَّهُ مَنْقُوْصٌ حَتَّى تَعْلَمُ أَنَّ الْعَرَبَ تَكَلَّمُ بِهِ</مقطع>
  <مقطع هوية='٨١٢٠٧'>فَإِذَا تَكَلَّمُوْا بِهِ مَنْقُوْصًا عَلَمْتَ أَنَّهَا يَاْءٌ وَقَعَتْ بَعْدَ فَتْحَةٍ أَوْ وَاوٌ</مقطع>
  <مقطع هوية='٢٧٩٠٣'> <!-- INDEX: arbitrariness of the sign  -->لَا تَسْتَطِيْعُ أَنْ تَقُوْلَ <قول هوية='٠٤٤٣٠'>ذَا لِكَذَا</قول> كَمَا لَا تَسْتَطِيْعُ أَنْ تَقُوْلَ <قول هوية='٧٠٨٥٨'>قَاْلُوْا قَدَمٌ لِكَذَا</قول> وَلَا <قول هوية='٧٥٤٢٣'>قَاْلُوْا جَمَلٌ لِكَذَا</قول>
  </مقطع>
  <مقطع هوية='١٩٨٠٢'>فَكَذٰلِكَ نَحْوَهُمَا فَمِنْ ذٰلِكَ  <حرف>قَفًا</حرف>  وَ<حرف>رَحًى</حرف>  وَ<حرف>رَجَا الْبِئْرِ</حرف>  وَأَشْبَاْهُ ذٰلِكَ</مقطع>
  <مقطع هوية='٤٢٢٩٣'>لَا يُفْرَقُ بَيْنَهَا وَبَيْنَ  <حرف>سَمَاْءٌ</حرف>  كَمَا لَا يُفْرَقُ بَيْنَ  <حرف>قَدَمٌ</حرف>  وَ<حرف>قَذَاْلٌ</حرف>  إِلَّا أَنَّكَ إِذَا سَمِعْتَ قُلْتُ <قول هوية='٠١٥٣٠'>هٰذَا فَعَلٌ</قول> وَ<قول هوية='١٢٩١١'>هٰذَا فَعَاْلٌ</قول>
  </مقطع>
  <مقطع هوية='٧٦٠٤١'>وَأَمَّا الْمَمْدُوْدُ فَكُلُّ شَيْءٍ وَقَعَتْ يَاْؤُهُ أَوْ وَاوُهُ بَعْدَ أَلْفٍ</مقطع>
  <مقطع هوية='٩٤١٩٨'>فَأَشْيَاْءُ يُعْلَمُ أَنَّهَا مَمْدُوْدَةٌ</مقطع>
  <مقطع هوية='٣٦٩٤٨'>وَذٰلِكَ نَحْوُ <حرف>الِاسْتِسْقَاْءُ</حرف></مقطع>
  <مقطع هوية='٦٩٠٧١'>لِأَنَّ <حرف>اسْتَسْقَيْتُ</حرف> <مثال>اسْتَفْعَلْتُ</مثال> مِثْلُ <حرف>اسْتَخْرَجْتُ</حرف></مقطع>
  <مقطع هوية='٤١٩٢١'>فَإِذَا أَرَدْتَ الْمَصْدَرَ عَلَمْتَ أَنَّهُ لَا بُدَّ مِنْ أَنْ تَقَعَ يَاْؤُهُ بَعْدَ أَلْفٍ كَمَا أَنَّهُ لَا بُدَّ لِلُجَيْمِ مِنْ أَنْ تَجِيْءَ فِي الْمَصْدَرِ بَعْدَ أَلْفٍ</مقطع>
  <مقطع هوية='٩٥٢٢٨'>فَأَنْتَ تَسْتَدِلُّ عَلَى الْمَمْدُوْدِ كَمَا يُسْتَدَلُّ عَلَى الْمَنْقُوْصِ بِنَظِيْرِهِ مِنْ غَيْرِ الْمُعْتَلِّ</مقطع>
  <مقطع هوية='٤٧٩٨٠'>حَيْثُ عَلِمْتَ أَنَّهُ لَا بُدَّ لِآخِرِهِ مِنْ أَنْ يَقَعَ بَعْدَ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٢٤٩٥٠'>كَمَا أَنَّهُ لَا بُدَّ لِآخَرِ نَظِيْرِهِ مِنْ أَنْ يَقَعَ بَعْدَ مَفْتُوْحٍ</مقطع>
  <مقطع هوية='٩٩٥٠٢'>وَمِثْلُ ذٰلِكَ  <حرف>الِاشْتِرَاْءُ</حرف>  لِأَنَّهُ  <حرف>اشْتَرَيْتُ</حرف>
  <حرف>افْتَعَلْتُ</حرف>  بِمَنْزِلَةِ  <حرف>احْتَقَرْتَ</حرف>
  </مقطع>
  <مقطع هوية='٣٤١٨٧'>فَلَا بُدَّ مِنْ أَنْ تَقَعَ الْيَاْءُ بَعْدَ أَلْفٍ كَمَا أَنَّ الْرَّاْءَ لَا بُدَّ لَهُ مِنْ أَنْ تَقَعَ بَعْدَ أَلْفٍ إِذَا أَرَدْتَ الْمَصْدَرَ</مقطع>
  <مقطع هوية='٠٤٤٣٠'>وَكَذٰلِكَ الْإِعْطَاْءُ لِأَنَّ  <حرف>أَعْطَيْتَ</حرف>
  <حرف>أَفَعَلْتَ</حرف>
  </مقطع>
  <مقطع هوية='٦٤٩٧٥'>كَمَا أَنَّكَ إِذَا أَرَدْتَ الْمَصْدَرَ مِنْ  <حرف>أَخْرَجْتُ</حرف>  لَمْ يَكُنْ بُدٌّ لِلُجَيْمِ مِنْ أَنْ تَجِيْءَ بَعْدَ أَلْفٍ إِذَا أَرَدْتَ الْمَصْدَرَ</مقطع>
  <مقطع هوية='٢٠٨٧٨'>فَعَلَى هٰذَا فَقِسْ هٰذَا النَّحْوَ</مقطع>
  <مقطع هوية='٩٩٣٨٩'>وَمِنْ ذٰلِكَ أَيْضًا  <حرف>الاْحَبِنْطَاْءُ</حرف>  لَا يُقَاْلُ إِلَّا  <حرف>احْبَنْطَيْتَ</حرف>  وَ<حرف>الاْسْلِنْقَاْءُ</حرف>  لِأَنَّكَ لَوْ أَوْقَعَتْ فِي مَكَاْنِ الْيَاْءِ حَرْفًا سِوَى الْيَاْءِ لأَوَقَعْتَهُ بَعْدَ أَلْفٍ</مقطع>
  <مقطع هوية='٨٠٧٣٤'>فَكَذٰلِكَ جَاْءَتْ الْيَاْءُ بَعْدَ أَلْفٍ فَإِنَّمَا تَجِيْءُ عَلَى مِثَاْلِ  <حرف>الاْسْتِفْعَاْلِ</حرف>
  </مقطع>
  <مقطع هوية='٣٠١٦٨'>وَمِمَّا تَعْلَمُ بِهِ أَنَّهُ مَّمْدُوْدٌ</مقطع>
  <مقطع هوية='١٦٤٧١'>أَنْ تَجِدَ الْمَصْدَرَ مَضْمُوْمُ الْأَوَّلِ يَكُوْنُ لِلْصَوْتِ</مقطع>
  <مقطع هوية='٥٩٢١٥'>نَحْوُ  <حرف>الْعُوَاْءُ</حرف>  وَ<حرف>الْدُّعَاْءُ</حرف>  وَ<حرف>الزُّقَاْءُ</حرف>
  </مقطع>
  <مقطع هوية='٣٤٨٢٩'>وَكَذٰلِكَ نَظِيْرُهُ مِنْ غَيْرِ الْمُعْتَلِّ نَحْوَ<حرف>الْصُّرَاْخ</حرف>  وَ<حرف>النُّبَاْحُ</حرف>  وَ<حرف>الْبُغَاْمُ</حرف>  وَمِنْ ذٰلِكَ أَيْضًا  <حرف>الْبُكَاْءُ</حرف>
  </مقطع>
  <مقطع هوية='٠٠٣٤٦'>وَقَاْلَ الْخَلِيْلِ  <قبس>الَّذِيْنَ قْصُرُوْهُ جَعَلُوْهُ كَاْلْحُزْنِ</قبس>
  </مقطع>
  <مقطع هوية='٧٩٩٨٠'>وَيَكُوْنَ الْعِلَاْجُ كَذٰلِكَ نَحْوُ  <حرف>الْنُّزَاْءُ</حرف>  وَنَظِيْرُهُ مِنْ غَيْرِ الْمُعْتَلِّ  <حرف>الْقُنَّاْصُ</حرف>
  </مقطع>
  <مقطع هوية='٢٨٥٥٦'>وَقَلَّمَا يَكُوْنُ مَا ضُمَّ أَوَّلُهُ مِنَ الْمَصْدَرِ مَنْقُوْصًا لِأَنَّ  <حرف>فَُعَلًا</حرف>  لَا تَكَاْدُ تَرَاْهُ مَصْدَرًا مِنْ غَيْرِ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ</مقطع>
  <مقطع هوية='١٢٢٥٥'>وَمِنَ الْكَلَاْمِ مَا لَا يُقَاْلُ لَهُ <قبس>مُدَّ لِكَذَا</قبس> كَمَا أَنَّكَ لَا تَقُوْلُ <قبس>جِرَاْبٌ وَغُرَاْبٌ لِكَذَا</قبس></مقطع>
  <مقطع هوية='٨٣٦٧٤'>وَإِنَّمَا تَعْرِفُهُ بِالْسَّمْعِ فَإِذَا سَمِعْتَهُ عَلِمْتَ أَنَّهَا يَاْءٌ أَوْ وَاوٌ وَقَعَتْ بَعْدَ أَلْفٍ</مقطع>
  <مقطع هوية='٥٧٧٤٦'>نَحْوَ<حرف>الْسَّمَاْءُ</حرف>  وَ<حرف>الْرِّشَاْءُ</حرف>  وَ<حرف>الْأََلَاْءُ</حرف>  وَ<حرف>الْمِقَلَاْءُ</حرف>
  </مقطع>
  <مقطع هوية='٥٤٤٥٦'>وَمِمَّا يُعْرَفُ بِهِ الْمَمْدُوْدُ الْجَمْعُ الَّذِيْ يَكُوْنُ عَلَى مِثَاْلِ  <حرف>أَفْعِلَةٍ</حرف>  فَوَاْحِدَهْ مَّمْدُوْدٌ أَبَدًا</مقطع>
  <مقطع هوية='٤١٥٨٤'>نَحْوَ<حرف>أَقْبِيَةٍ</حرف>  وَاحِدُهَا  <حرف>قَبَاْءٌ</حرف>  وَ<حرف>أَرْشِيَةٍ</حرف>  وَاحِدُهَا  <حرف>رِشَاْءٌ</حرف>  وَقَاْلُوْا  <حرف>نَدًى</حرف>  وَ<حرف>أَنْدِيَةٌ</حرف>  فَهٰذَا شَاْذٌّ</مقطع>
  <مقطع هوية='٦٤٨٦١'>وَكُلُّ جَمَاْعَةِ وَاحِدُهَا  <حرف>فَُعْلَةٌ</حرف>  أَوْ  <حرف>فَِعْلَةٌ</حرف>  فَهِيَ مَقْصُوْرَةٌ</مقطع>
  <مقطع هوية='٥٦٥٩٦'>نَحْوَ<حرف>عُرْوَةٍ</حرف>  وَ<حرف>عُرًى</حرف>  وَ<حرف>فَِرْيَةٍ</حرف>  وَ<حرف>فَِرًى</حرف>
  </مقطع>

