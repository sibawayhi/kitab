    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبٌ مِنَ الْفِعْلِ سُمِّيَ الْفِعْلُ فِيْهِ بِأَسْمَاْءَ لَمْ تُؤْخَذْ مِنْ أَمْثِلَةِ الْفِعْلِ الْحَاْدِثِ</مقطع>
   </عنوان>
    <مقطع رقم="٢">وَمَوْضِعُهَا مِنْ الْكَلَامِ الْأَمْرُ وَالْنَّهْىُ</مقطع>
    <مقطع رقم="٣">فَمِنْهَا مَا يَتَعَدَّى الْمَأْمُوْرَ إِلَى مَأُمُورٍ بِهِ</مقطع>
    <مقطع رقم="٤">وَمِنْهَا مَالْا يَتَعَدَّى الْمَأْمُوْرَ</مقطع>
    <مقطع رقم="٥">وَمِنْهَا مَا يَتَعَدَّى الْمَنْهِيَّ إِلَى مَنْهِيٍّ عَنْهُ</مقطع>
    <مقطع رقم="٦">وَمِنْهَا مَا لْا يَتَعَدَّى الْمَنْهِيَّ</مقطع>
    <مقطع رقم="٧">أَمَّا مَا يَتَعَدَّى فَقَوْلُكَ <قول>رُوَيْدَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٨">فَإِنَّمَا هُوَ ٱسْمٌ لِقَوْلِكَ <بدل>
          <يع>ٱسْمُ</يع>
          <هاْ>ٱسْمُ قَوْلِكَ</هاْ>
          <بكاْ>ٱسْمٌ لِقَوْلِكَ</بكاْ>
      </بدل>
       <قول>أَرْوِدْ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٩">وَمِنْهَا <قول>هَلُمَّ زَيْدًا</قول> إِنَّمَا تُرِيْدُ <قول>هَاْتِ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١٠">وَمِنْهَا قَوْلُ الْعَرَبِ <قول>حَيَّهَلَ الْثَّرِيْدَ</قول>
   </مقطع>
    <مقطع رقم="١١">وَزَعَمَ <سند>أَبُوْ الْخَطَّاْبِ</سند> أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <قول>حَيَّهَلَ الصَّلَاةَ</قول>
   </مقطع>
    <مقطع رقم="١٢">فَهٰذَا ٱسْمُ <قول>ائْتِ الصَّلَاةَ</قول> أَيْ <قول>ائْتُوْا الْثَّرِيْدَ</قول> وَ<قول>أْتُوْا الصَّلَاةَ</قول>
   </مقطع>
    <مقطع رقم="١٣">وَمِنْهُ قَوْلُهُ</مقطع>
    <شاهدة رقم="١" xml:id="٤٧-١">
       <بيت>
          <مصراع>تَرَاكِهَا مِنْ إِبْلٍ تَرَاكِهَا</مصراع>
          <مصراع>[أَمَّا تَرَى الْموتَ لدى أوراكهاْ]</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٢٤١"/>
    <مقطع رقم="١٤">فَهٰذَا ٱسْمٌ لِقَوْلِهِ لَهُ <قول>اتْرُكْهَا</قول>
   </مقطع>
    <مقطع رقم="١٥">وَقَالَ</مقطع>
    <شاهدة رقم="٢" xml:id="٤٧-٢">
       <بيت>
          <مصراع>مَنَاْعِهَا مِنْ إِبِلٍ مَنَاْعِهَا</مصراع>
          <مصراع>[أَلَا ترَى الْموت لدى أرباهاْ]</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٦">وَهٰذَا ٱسْمٌ لِقَوْلِهِ لَهُ <قول>امْنَعْهَا</قول>
   </مقطع>
    <مقطع رقم="١٧">وَأَمَّا مَالَا يَتَعَدَّى الْمَأْمُوْرَ وَلَا الْمَنْهِيَّ إِلَى مَأُمُوّرٍ بِهِ وَلَا إِلَى مَنْهِيٍّ عَنْهُ فَنَحْوُ قَوْلِكَ <قول>مَهْ مَهْ</قول> وَ<قول>صَهْ صَهْ</قول>
       <!--     <بدل> -->
       <!--     <يع> -->
       <!--        <قول>مَهْ</قول> وَ<قول>صَهْ</قول>   -->
       <!--   </يع>   -->
       <!--     <هاْ> -->
       <!--        <قول>مَهْ مَهْ</قول> وَ<قول>صَهْ صَهْ</قول>   -->
       <!--   </هاْ>   -->
       <!--     <بكاْ> -->
       <!--        <قول>مَهْ مَهْ</قول> وَ<قول>صَهْ صَهْ</قول>   -->
       <!--   </بكاْ>   -->
       <!-- </بدل>   -->وَ<قول>آهٍ</قول> وَ<قول>إِيْهٍ</قول> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع رقم="١٨">وَاْعْلَمْ أَنَّ هَذِهِ الْحُرُوْفَ الَّتِىْ هَى أَسْمَاْءٌ لِلْفِعْلِ لَا تَظْهَرُ فِيْهَا عَلَامَةُ الْمُضْمَرُ</مقطع>
    <مقطع رقم="١٩">وَذٰلِكَ أَنَّهَا أَسْمَاْءٌ وَلَيْسَتْ عَلَى الْأَمْثِلَةِ الَّتِي أُخِذَتْ مِنَ الْفِعْلِ الْحَاْدِثِ فِيْمَا مَضَى وَفِيْمَا يُسْتَقْبَلَ وَفِي يَوْمِكَ</مقطع>
    <مقطع رقم="٢٠">وَلَكِنَّ الْمَأْمُوْرَ وَالْمَنْهِيَّ مُضْمَرَانِ فِي النِّيَّةِ</مقطع>
    <مقطع رقم="٢١">وَإِنَّمَا كَانَ أَصْلُ هٰذَا فِي الْأَمْرِ وَالنَّهْيِ</مقطع>
    <مقطع رقم="٢٢">وَكَانَا أَوْلَى بِهِ لِأَنَّهُمَا لَا يَكُوْنَانِ إِلَا بِفِعْلٍ</مقطع>
    <مقطع رقم="٢٣">فَكَانَ الْمَوْضِعُ الَّذِي لَا يَكُونُ إِلَّا فِعْلًا أَغْلَبَ عَلَيْهِ</مقطع>
    <مقطع رقم="٢٤">وَهَى أَسْمَاْءُ الْفِعْلِ وَأُجْرِيَتْ مُجْرَى مَا فِيْهِ الْأَلِفُ وَاللَّامُ نَحْو  <حرف>الْنَّجَاْءَ</حرف>
   </مقطع>
    <مقطع رقم="٢٥">لِئَلَّا يُخَالِفَ لَفْظُ مَا بَعْدَهَا لَفْظَ مَا بَعْدَ الْأَمْرِ وَالنَّهْيِ</مقطع>
    <مقطع رقم="٢٦">وَلَمْ تَصَرَّفْ تَصَرُّفَ <هارون مجلد="١" صفحة="٢٤٢"/>الْمَصَاْدِرِ لِأَنَّهَا لَيْسَتْ بِمَصَاْدِرَ</مقطع>
    <مقطع رقم="٢٧">وَإِنَّمَا سُمِّيَ بِهَا الْأَمْرُ وَالنَّهْيُ فَعَمِلَتْ عَمَلَهُمَا وَلَمْ تُجَاوِزْ فَهَى تَقُوْمُ مَقَامَ فِعْلِهِمَا</مقطع>

