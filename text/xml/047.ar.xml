    <عنوان>
       <مقطع هوية='٦٥٦٣١'>هٰذَا بَاْبٌ مِنَ الْفِعْلِ سُمِّيَ الْفِعْلُ فِيْهِ بِأَسْمَاْءَ لَمْ تُؤْخَذْ مِنْ أَمْثِلَةِ الْفِعْلِ الْحَاْدِثِ</مقطع>
   </عنوان>
    <مقطع هوية='١٦٦٣٤'>وَمَوْضِعُهَا مِنْ الْكَلَامِ الْأَمْرُ وَالْنَّهْىُ</مقطع>
    <مقطع هوية='٨٧٤٨٦'>فَمِنْهَا مَا يَتَعَدَّى الْمَأْمُوْرَ إِلَى مَأُمُورٍ بِهِ</مقطع>
    <مقطع هوية='٤١٦٨٧'>وَمِنْهَا مَالْا يَتَعَدَّى الْمَأْمُوْرَ</مقطع>
    <مقطع هوية='٧١٣٩٨'>وَمِنْهَا مَا يَتَعَدَّى الْمَنْهِيَّ إِلَى مَنْهِيٍّ عَنْهُ</مقطع>
    <مقطع هوية='١٠٦٠٧'>وَمِنْهَا مَا لْا يَتَعَدَّى الْمَنْهِيَّ</مقطع>
    <مقطع هوية='٩٧٧٤٢'>أَمَّا مَا يَتَعَدَّى فَقَوْلُكَ <قول هوية='٦١٣٦٩'>رُوَيْدَ زَيْدًا</قول>
   </مقطع>
   <مقطع هوية='٧١٦٦٦'>فَإِنَّمَا هُوَ اسْمٌ لِقَوْلِكَ
   <!-- <بدل> -->
   <!--        <يع>اسْمُ</يع> -->
   <!--        <هاْ>اسْمُ قَوْلِكَ</هاْ> -->
   <!--        <بكاْ>اسْمٌ لِقَوْلِكَ</بكاْ> -->
   <!--    </بدل> -->
       <قول هوية='٨٩٧١٢'>أَرْوِدْ زَيْدًا</قول>
   </مقطع>
   <مقطع هوية='٥٤٣٧٥'>وَمِنْهَا <قول هوية='٥٣٩١٢'>هَلُمَّ زَيْدًا</قول></مقطع>
   <مقطع هوية='٩٢٨٤٩'>إِنَّمَا تُرِيْدُ <قول هوية='٣٣٣٠٣'>هَاْتِ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٤٥٤٧٨'>وَمِنْهَا قَوْلُ الْعَرَبِ <قول هوية='٩٧٠٥٧'>حَيَّهَلَ الْثَّرِيْدَ</قول>
   </مقطع>
    <مقطع هوية='٦٨٢٩٧'>وَزَعَمَ أَبُوْ الْخَطَّاْبِ أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <قول هوية='٣٣٨٨٨'>حَيَّهَلَ الصَّلَاةَ</قول>
   </مقطع>
   <مقطع هوية='٣٧٩١٣'>فَهٰذَا اسْمُ <قول هوية='٩٤٧٠٧'>ائْتِ الصَّلَاةَ</قول></مقطع>
   <مقطع هوية='١٢١٨٠'>أَيِ <قول هوية='٦٤٢٢٦'>ائْتُوْا الثَّرِيْدَ</قول> وَ<قول هوية='٧٢٨٩٤'>أْتُوْا الصَّلَاةَ</قول>
   </مقطع>
    <مقطع هوية='٩٢٠٥٠'>وَمِنْهُ قَوْلُهُ</مقطع>
    <شاهدة هوية='٣٣٦٥٠'>
       <بيت>
          <مصراع><ثبات>تَرَاكِهَا</ثبات> مِنْ إِبْلٍ <ثبات>تَرَاكِهَا</ثبات></مصراع>
          <!-- <مصراع>[أَمَّا تَرَى الْموتَ لدى أوراكهاْ]</مصراع> -->
      </بيت>
   </شاهدة>
   <مقطع هوية='٠٩٣٧٥'>فَهٰذَا اسْمٌ لِقَوْلِهِ لَهُ <حرف>اتْرُكْهَا</حرف></مقطع>

   <مقطع هوية='٧١٣٠٢'>وَقَالَ</مقطع>
    <شاهدة هوية='٠٦٢٩٨'>
       <بيت>
          <مصراع><ثبات>مَنَاْعِهَا</ثبات> مِنْ إِبِلٍ <ثبات>مَنَاْعِهَا</ثبات></مصراع>
          <!-- <مصراع>[أَلَا ترَى الْموت لدى أرباهاْ]</مصراع> -->
      </بيت>
   </شاهدة>
   <مقطع هوية='٨٧٨٦٩'>وَهٰذَا اسْمٌ لِقَوْلِهِ لَهُ <حرف>امْنَعْهَا</حرف></مقطع>
   <مقطع هوية='٨١٧١٣'>وَأَمَّا مَا لَا يَتَعَدَّى الْمَأْمُوْرَ وَلَا الْمَنْهِيَّ إِلَى مَأُمُوّرٍ بِهِ وَلَا إِلَى مَنْهِيٍّ عَنْهُ</مقطع>
   <مقطع هوية='٣٦٢١٣'>فَنَحْوُ قَوْلِكَ <حرف>مَهْ مَهْ</حرف>
   وَ<حرف>صَهْ صَهْ</حرف>
       <!--     <بدل> -->
       <!--     <يع> -->
       <!--        <قول هوية='٨٨٠٦٢'>مَهْ</قول> وَ<قول هوية='٤٣٥٨٣'>صَهْ</قول>   -->
       <!--   </يع>   -->
       <!--     <هاْ> -->
       <!--        <قول هوية='٨٢٥١٠'>مَهْ مَهْ</قول> وَ<قول هوية='٩٤٦٤٠'>صَهْ صَهْ</قول>   -->
       <!--   </هاْ>   -->
       <!--     <بكاْ> -->
       <!--        <قول هوية='٨٨٣٨٤'>مَهْ مَهْ</قول> وَ<قول هوية='٢٢٨٢٠'>صَهْ صَهْ</قول>   -->
       <!--   </بكاْ>   -->
       <!-- </بدل>   -->وَ<!-- <حرف>آهٍ</حرف> -->
       وَ<حرف>إِيْهٍ</حرف> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
       <مقطع هوية='٠٨٣٧٧'>وَاعْلَمْ أَنَّ هَذِهِ الْحُرُوْفَ الَّتِي هَى أَسْمَاْءٌ لِلْفِعْلِ</مقطع>
       <مقطع هوية='٩٨٥٨٦'>لَا تَظْهَرُ فِيْهَا عَلَامَةُ الْمُضْمَرِ</مقطع>
       <مقطع هوية='٠٤٦٤٤'>وَذٰلِكَ أَنَّهَا أَسْمَاْءٌ</مقطع>
       <مقطع هوية='٥٥٩٠١'>وَلَيْسَتْ عَلَى الْأَمْثِلَةِ الَّتِي أُخِذَتْ مِنَ الْفِعْلِ الْحَاْدِثِ</مقطع>
       <مقطع هوية='٢٩٢٨٤'>فِيْمَا مَضَى وَفِيْمَا يُسْتَقْبَلُ وَفِي يَوْمِكَ</مقطع>
    <مقطع هوية='٩١٣٧٩'>وَلَكِنَّ الْمَأْمُوْرَ وَالْمَنْهِيَّ مُضْمَرَاْنِ فِي النِّيَّةِ</مقطع>
    <مقطع هوية='٥٢٠١٦'>وَإِنَّمَا كَانَ أَصْلُ هٰذَا فِي الْأَمْرِ وَالنَّهْيِ وَكَانَا أَوْلَى بِهِ</مقطع>
    <مقطع هوية='٨٠٩١٠'>لِأَنَّهُمَا لَا يَكُوْنَانِ إِلَا بِفِعْلٍ</مقطع>
    <مقطع هوية='٩٤٣٨١'>فَكَانَ الْمَوْضِعُ الَّذِي لَا يَكُونُ إِلَّا فِعْلًا أَغْلَبَ عَلَيْهِ</مقطع>
    <مقطع هوية='٤٦٧٦٤'>وَهَى أَسْمَاْءُ الْفِعْلِ</مقطع>
    <مقطع هوية='٥١٠٢٢'>وَأُجْرِيَتْ مُجْرَى مَا فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
    <مقطع هوية='٧٠٤٤٩'>نَحْوَ <حرف>النَّجَاْءَ</حرف></مقطع>
    <مقطع هوية='٣٩٨٠٧'>لِئَلَّا يُخَاْلِفَ لَفْظُ مَا بَعْدَهَا لَفْظَ مَا بَعْدَ الْأَمْرِ وَالنَّهْيِ</مقطع>
    <مقطع هوية='٩٥٦٠٤'>وَلَمْ تَصَرَّفْ تَصَرُّفَ الْمَصَاْدِرِ لِأَنَّهَا لَيْسَتْ بِمَصَاْدِرَ</مقطع>
    <مقطع هوية='٥٩٨٢١'>وَإِنَّمَا سُمِّيَ بِهَا الْأَمْرُ وَالنَّهْيُ</مقطع>
    <مقطع هوية='٣٣٥٤٣'>فَعَمِلَتْ عَمَلَهُمَا وَلَمْ تُجَاوِزْ</مقطع>
    <مقطع هوية='٨٢٦٠١'>فَهَى تَقُوْمُ مَقَامَ فِعْلِهِمَا</مقطع>

