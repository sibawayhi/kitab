<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٦٣"
     درنبورج="١-٣١٩"
     البكاء="٣-٢٣٨"
     هارون="٢-٣١٩"
     يعقوب="٢-٣٣١"
     رقم="١٩٠">

   <عنوان>
      <مقطع>هذا باب يختار فيه النصب لأن الآخر ليس من نوع الأول</مقطع>
   </عنوان>
   <مقطع>وهو لغة أهل الحجاز وذلك قولك ما فيها أحد إلا حمارا جاءوا به على معنى ولكن حمارا وكرهوا أن يبدلوا الآخر من الأول فيصير كأنه من نوعه فحمل على معنى ولكن وعمل فيه ما قبله كعمل العشرين في الدرهم</مقطع>
   <مقطع>وأما بنو تميم فيقولون لا أحد فيها إلا حمار أرادوا ليس فيها إلا حمار ولكنه ذكر أحدا توكيدا لأن يعلم أن ليس فيها آدمى<هارون مجلد="٢" صفحة="٣١٩"/>ثم أبدل فكأنه قال ليس فيها إلا حمار</مقطع>
   <مقطع>وإن شئت جعلته إنسانها قال الشاعر وهو أبو ذؤيب الهذلي</مقطع><شاهدة>
         <بيت>
            <مصراع>فإنْ تُمْسِ في قبرٍ برَهْوَةَ ثاوِيا</مصراع>
            <مصراع>أَنِيسُك أصداءُ القُبورِ تَصيحُ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>فجعلهم أنيسه</مقطع>
   <مقطع>ومثل ذلك قوله مالى عِتابٌ إلاَّ السيفُ جعله عتابه</مقطع>
   <مقطع>كما أنك تقول ما أنت إلا سيرا إذا جعلته هو السير</مقطع>
   <مقطع>وعلى هذا أنشدت بنو تميم قول النابغة [ الذيباني ]<هارون مجلد="٢" صفحة="٣٢٠"/></مقطع><شاهدة>
         <بيت>
            <مصراع>يا دارَميَّةَ بالعَلْياء فالسَّنَدِ</مصراع>
            <مصراع>[ لإَفْوَتْ وطال عليها سالفُ الأَبَدِ</مصراع>
         </بيت>
         <بيت>
            <مصراع>وقفتُ فيها أُصَيْلاناً أُسائُلها ]</مصراع>
            <مصراع>عَيَّتْ جَواباً وما بالرَّبْعِ مِن أَحَدِ</مصراع>
         </بيت>
         <بيت>
            <مصراع>إلاَّ أَوارِىُّ لأياً ما أبِّينُها</مصراع>
            <مصراع>والنُّوْىُ كالحَوْض بالمَظْلومة الجَلَدِ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>وأهل الحجاز ينصبون</مقطع>
   <مقطع>ومثل ذلك قوله<هارون مجلد="٢" صفحة="٣٢١"/></مقطع><شاهدة>
         <بيت>
            <مصراع>وَبلّدَةٍ ليس بها أَنِيسُ</مصراع>
            <مصراع>إلاّ اليَعافيرُ وإلا العِيسُ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>جعلها أنيسها</مقطع>
   <مقطع>وإن شئت كان على الوجه الذي فسرته في الحمار اول مرة</مقطع>
   <مقطع>وهو في كلا المعنيين إذا لم تنصب بدل</مقطع>
   <مقطع>ومن ذلك من المصادر ماله عليه سلطان إلا التكلف لأن التكلف ليس من السلطان</مقطع>
   <مقطع>وكذلك إلا أنه يتكلف هو بمنزلة التكلف</مقطع>
   <مقطع>وإنما يجئ هذا على معنى ولكن</مقطع>
   <مقطع>ومثل ذلك قوله عز وجل ذكره<آية>ما لهم به من علم إلا اتباع الظن</آية>ومثله<آية>وإن نشأ نغرقهم فلا صريخ لهم ولا هم ينقذون إلا رحمة منا</آية>
   </مقطع>
   <مقطع>ومثل ذلك قول النابغة</مقطع><شاهدة>
         <بيت>
            <مصراع>حَلفتُ يَميناً غيرَ ذى مَثْنَوِيةٍ</مصراع>
            <مصراع>ولا عِلْمَ إلا حُسْنَ ظَنٍّ بصاحبِ</مصراع>
         </بيت>
      </شاهدة>
      <هارون مجلد="٢" صفحة="٣٢٢"/>
      <مقطع>وأما بنو تميم فيرفعون هذا كله يجعلونه اتباع الظن علمهم وحسن الظن علمه والتكلف سلطانه</مقطع>
   <مقطع>وهم ينشدون بيت ابن الأيهم التغلبي رفعا</مقطع><شاهدة>
         <بيت>
            <مصراع>ليس بيني وبين قَيْسٍ عَتابُ</مصراع>
            <مصراع>غيرُ طَعْنِ الكَلَى وضَرْبِ الرِّقابِ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>جعلوا ذلك العتاب</مقطع>
   <مقطع>وأهل الحجاز ينصبون على التفسير الذي ذكرنا</مقطع>
   <مقطع>وزعم الخليل أن الرفع في هذا على قوله</مقطع><شاهدة>
         <بيت>
            <مصراع>وخيْلٍ قد دَلَفْتُ لها بخَيْلٍ</مصراع>
            <مصراع>تَحِيّةُ بَيْنهِمْ ضَرْبٌ وَجيعُ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>جعل الضرب تحيَّتَهم كما جعلوا اتِّباعَ الظن علمَهم</مقطع>
   <مقطع>وإن شئتَ<هارون مجلد="٢" صفحة="٣٢٣"/>كانت على ما فسرت لك في الحمار إذا لم تجعله أنيس ذلك المكان</مقطع>
   <مقطع>وقال الحارث بن عباد</مقطع><شاهدة>
         <بيت>
            <مصراع>والحَرْبُ لا يَبْقَّى لَجِاحِمِها</مصراع>
            <مصراع>التَّخَيُّلُ والمِراحُ</مصراع>
         </بيت>
         <بيت>
            <مصراع>إلا الفَتَى الصَّبَّارُ في</مصراع>
            <مصراع>النَّجَداتِ والفَرَسُ الوَقاحُ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>وقال</مقطع><شاهدة>
         <بيت>
            <مصراع>لم يغْذُهَا الرِّسْلُ ولا أيْسارُهَا</مصراع>
            <مصراع>إلا طَرِىُّ اللّحْمِ واستجزارُهَا</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>وقال<هارون مجلد="٢" صفحة="٣٢٤"/></مقطع><شاهدة>
         <بيت>
            <مصراع>عَشِيّةَ لا تُغْنِي الرِّماحُ مكانها</مصراع>
            <مصراع>ولا النَّبْلُ إلا المشْرَفِىُّ المُصَمِّمُ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>وهذا يقوى ما أتاني زيد إلا عمرو وما أعانه إخوانكم إلا إخوانه لأنها معارف ليست الأسماء الآخرة بها ولا منها</مقطع>
</باب>
