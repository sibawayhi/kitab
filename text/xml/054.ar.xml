  <عنوان>
    <مقطع هوية='١٨٤١٥'>هٰذَا بَاْبُ مَا جَرَى مِنْهُ عَلَى الْأَمْرِ وَالتَّحْذِيْرِ</مقطع>
  </عنوان>
  <مقطع هوية='٥٢٨٨٠'>وَذٰلِكَ قَوْلُكَ إِذَا كُنْتَ تُحَذِّرُ <حرف>إِيَّاْكَ</حرف></مقطع>
  <مقطع هوية='٧٠٤٦٤'>كَأَنَّكَ قُلْتَ  <قول هوية='٥٠٦٢٣'>إِيّاْكَ نَحِّ</قول> وَ<قول هوية='٢٧٢٥٩'>إِيَّاْكَ بَاْعِدْ</قول> وَ<قول هوية='٥٤٦٦١'>إِيَّاْكَ اتَّقِ</قول> وَمَا أَشْبَهَ ذَا</مقطع>
  <مقطع هوية='٩٣٧٣٦'>وَمِنْ ذٰلِكَ أَنْ تَقُوْلَ <قول هوية='٢٣٤١٨'>نَفْسَكَ يَا فُلَاْنُ</قول></مقطع>
  <مقطع هوية='٨٥٢١٩'>أَيِ <قول هوية='٠٠٨٨٨'>اتَّقِ نَفْسَكَ</قول>
  </مقطع>
  <مقطع هوية='٥٤٥٣٠'>إِلَّا أَنَّ هٰذَا لَا يَجُوْزُ فِيْهِ إِظْهَاْرُ مَا أَضْمَرْتَ</مقطع>
  <مقطع هوية='١٧٦٨٤'>وَلٰكِنْ ذَكَرْتُهُ لِأُمَثِّلَ لَكَ مَا لَا يُظْهَرُ إِضْمَاْرُهُ</مقطع>
  <مقطع هوية='٨٢١١١'>وَمِنْ ذٰلِكَ أَيْضًا قَوْلُكَ <قول هوية='٣٦٩٢٦'>إِيَّاْكَ وَالْأَسَدَ</قول></مقطع>
  <مقطع هوية='٨٠٦٢٧'>وَ<قول هوية='١٤٧٥٩'>إِيَّاْيَ وَالشَّرَّ</قول></مقطع>
  <مقطع هوية='٩٧٧٤١'>كَأَنَّهُ قَاْلَ <قول هوية='٢٤٠٠٥'>إِيَّاْكَ فَاتَّقِيَنَّ وَالْأَسَدَ</قول></مقطع>
  <مقطع هوية='٧٢١٦٥'>وَكَأَنَّهُ قَاْلَ <قول هوية='١٧٧٩٥'>إِيَّاْيَ لَأَتَّقِيَنَّ وَالشَّرَّ</قول>
  </مقطع>
  <مقطع هوية='٠٥٠٨٦'>فَـ<حرف>إِيَّاْكَ</حرف> مُتَّقًى وَ<حرف>الْأَسَدُ</حرف> وَ<حرف>الشَّرُّ</حرف> مُتَّقَيَاْنِ</مقطع>
  <مقطع هوية='٥٧٣١٦'>فَكِلاْهُمَا مَفْعُوْلٌ وَمَفْعُوْلٌ مَعَهُ</مقطع>
  <مقطع هوية='٧٠١٢٥'>وَمِثْلُهُ  <قول هوية='٧٠٦٥٢'>إِيَّاْيَ وَأَنْ يَحْذِفَ أَحَدُكُمْ الْأَرْنَبَ</قول>
  </مقطع>
  <مقطع هوية='٢٥٤٥٨'>وَمِثْلُهُ <حرف>إِيَّاْكَ وَإِيَّاْهُ</حرف></مقطع>
  <مقطع هوية='٣٧٢٧٦'>وَ<حرف>إِيَّاْيَ وَإِيَّاْهُ</حرف></مقطع>
  <مقطع هوية='٧١١٠٨'>كَأَنَّهُ قَاْلَ <قول هوية='١١٠١٧'>إِيَّاْكَ بَاْعِدْ وَإِيَّاْهُ</قول> أَوْ <حرف>نَحِّ</حرف></مقطع>
  <مقطع هوية='٨٦٥٢٣'>وَزَعَمَ أَنَّ بَعْضَهُمْ يُقَاْلُ لَهُ <حرف>إِيَّاْكَ</حرف> فَيَقُوْلُ  <حرف>إِيَّاْيَ</حرف></مقطع>
  <مقطع هوية='٣٠٩٣٤'>كَأَنَّهُ قَاْلَ  <قول هوية='٢٧٢٦٧'>إِيَّاْيَ أَحْفَظُ وَأَحْذَرُ</قول>
  </مقطع>
  <مقطع هوية='٣٦٥٠٦'>وَحَذَفُوْا الْفِعْلَ مِنْ  <حرف>إِيَّاْكَ</حرف> لِكَثْرَةِ اسْتِعْمَاْلِهِمْ  <حرف>إِيَّاْهُ</حرف> فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٢٠١٤٢'>فَصَاْرَ بَدَلًا مِنْ الْفِعْلِ</مقطع>
  <مقطع هوية='٧٥٨٩٠'>وَحَذَفُوْا كَحَذْفِهِمْ  <حرف>حِيْنَئِذٍ الْآنَ</حرف>
  </مقطع>
  <مقطع هوية='١٤٥٨٢'>فَكَأَنَّهُ قَاْلَ <قول هوية='٩٨١٦٨'>احْذَرِ الْأَسَدَ</قول>
  </مقطع>
  <مقطع هوية='١١٨٧٩'>وَلٰكِنْ لَا بُدَّ مِنْ الْوَاْوِ لِأَنَّهُ ٱسْمٌ مَضْمُوْمٌ إِلَى آخَرَ</مقطع>
  <مقطع هوية='٥٤١٤٠'>وَمِنْ ذٰلِكَ  <قول هوية='٧٦٢٨٢'>رَأْسَهُ وَالْحَاْئِطَ</قول>
  </مقطع>
  <مقطع هوية='٧٣٦٧٤'>كَأَنَّهُ قَاْلَ <حرف>خَلِّ</حرف> أَوْ <حرف>دَعْ</حرف>
  رَأْسَهُ وَالْحَاْئِطَ</مقطع>
  <مقطع هوية='٨٦٧٤١'>فَالرَّأْسُ مَفْعُوْلٌ وَالْحَاْئِطُ مَفْعُوْلٌ مَعَهُ فَانْتَصَبَا جَمِيْعًا</مقطع>
  <مقطع هوية='٠٧١١٣'>وَمِنْ ذٰلِكَ قَوْلُهُمْ  <قول هوية='٧١٩٩١'>شَأْنَكَ وَالْحَجَّ</قول>
  </مقطع>
  <مقطع هوية='٠٣٤٠٦'>كَأَنَّهُ قَاْلَ <قول هوية='٦١٣٠٢'>عَلَيْكَ شَأْنَكَ مَعَ الْحَجِّ</قول>
  </مقطع>
  <مقطع هوية='٦٠٧٧٩'>وَمِنْ ذٰلِكَ <قول هوية='٥٦٤٤٧'>امْرَأً وَنَفْسَهُ</قول>
  </مقطع>
  <مقطع هوية='١٨٦٧٠'>كَأَنَّهُ قَاْلَ <قول هوية='٣٨٠٣٧'>دَعِ امْرَأً مَعَ نَفْسِهِ</قول></مقطع>
  <مقطع هوية='١٩٨٠٣'>فَصَاْرَتْ الْوَاْوُ فِي مَعْنَى <حرف>مَعَ</حرف></مقطع>
  <مقطع هوية='٧٤٥٢٥'>كَمَا صَاْرَتْ فِي مَعْنَى <حرف>مَعَ</حرف>
  فِي قَوْلِهِمْ  <قول هوية='٩٧١٤٢'>مَا صَنَعْتَ وَأَخَاْكَ</قول></مقطع>
  <مقطع هوية='٨٩٥٤٨'>وَإِنْ شِئْتَ  لَمْ يَكُنْ فِيْهِ ذٰلِكَ الْمَعْنَى</مقطع>
  <مقطع هوية='٥٧١٤٢'>فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='٠١٧١٨'>كَأَنَّهُ قَاْلَ  <قول هوية='٩١١٨٥'>عَلَيْكَ رَأْسَكَ</قول> وَ<قول هوية='٦٧١٩٧'>عَلَيْكَ الْحَاْئِطَ</قول>
  </مقطع>
  <مقطع هوية='٥٦٦١٧'>وَكَأَنَّهُ قَاْلَ  <قول هوية='٢٢١٣١'>دَعِ امْرَأً وَدَعْ نَفْسَهُ</قول>
  </مقطع>
  <مقطع هوية='٨٩٧٨٢'>فَلَيْسَ يَنْقُضُ هٰذَا مَا أَرَدْتَ فِي مَعْنَى  <حرف>مَعَ</حرف> مِنْ الْحَدِيْثِ</مقطع>
  <مقطع هوية='٥٨٧٧٨'>وَمِثْلُ ذٰلِكَ  <قول هوية='٢٦٨٠٥'>أَهْلَكَ وَاللَّيْلَ</قول>
  </مقطع>
  <مقطع هوية='٤٠٦٤٢'>كَأَنَّهُ قَاْلَ  <قول هوية='٠٥١٧٤'>بَاْدِرْ أَهْلَكَ قَبْلَ اللَّيْلِ</قول>
  </مقطع>
  <مقطع هوية='٧١٧٦١'>وَإِنَّمَا الْمَعْنَى أَنْ يُحَذِّرَهُ أَنْ يُدْرِكَهُ اللَّيْلُ</مقطع>
  <مقطع هوية='٩٨١٧٠'>وَاللَّيْلُ مُحَذَّرٌ مِنْهُ كَمَا كَاْنَ الْأَسَدُ مُحْتَفَظًا مِنْهُ</مقطع>
  <مقطع هوية='٨٧٦٨٢'>وَمِنْ ذٰلِكَ قَوْلُهُمْ <قول هوية='٣٢٤٨٢'>مَاْزِ رَأْسَكَ وَالسَّيْفَ</قول>
  </مقطع>
  <مقطع هوية='٠٦١٥٩'>كَمَا تَقُوْلُ <قول هوية='١٣٧٠٨'>رَأْسَكَ وَالْحَاْئِطَ</قول>
  </مقطع>
  <مقطع هوية='٤٠٢١١'>وَهُوَ يُحَذِّرُهُ كَأَنَّهُ قَاْلَ <قول هوية='٣٤٦٣٤'>اتَّقِ رَأْسَكَ وَالْحَاْئِطَ</قول></مقطع>
  <مقطع هوية='٠٧٠٦٤'>وَإِنَّمَا حَذَفُوْا الْفِعْلَ فِي هَذِهِ الْأَشْيَاْءِ حِيْنَ ثَنَّوْا</مقطع>
  <مقطع هوية='٥١٤٢٤'>لِكَثْرَتِهَا فِي كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='٢٤٩٨٠'>وَاسْتِغْنَاْءً بِمَا يَرَوْنَ مِنَ الْحَاْلِ وَبِمَا جَرَى مِنْ الذِّكْرِ</مقطع>
  <مقطع هوية='٧٧٦٤٥'>وَصَاْرَ الْمَفْعُوْلُ الْأَوَّلُ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
  <مقطع هوية='٧٥٨٦٦'>حِيْنَ صَاْرَ عِنْدَهُمْ مِثْلَ  <حرف>إِيَّاْكَ</حرف>
  </مقطع>
  <مقطع هوية='٤٣١٩٧'>وَلَمْ يَكُنْ مِثْلَ <حرف>إِيَّاْكَ</حرف> لَوْ أَفْرَدْتَهُ</مقطع>
  <مقطع هوية='٣٢٢٦٦'>لِأَنَّهُ لَمْ يَكْثُرْ فِي كَلَاْمِهِمْ كَثْرَةَ  <حرف>إِيَّاْكَ</حرف>
  </مقطع>
  <مقطع هوية='٩٣٩٣٤'>فَشُبِّهَتْ بِـ<حرف>إِيَّاْكِ</حرف> حَيْثُ طَاْلَ الْكَلَاْمُ</مقطع>
  <مقطع هوية='٨٨٣٨٩'>وَكَاْنَ كَثِيْرًا فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٣١٦٣٥'>فَلَوْ قُلْتَ <قول هوية='٩٣٤٩١'>نَفْسَكَ</قول> أَوْ  <قول هوية='٦٦٤٠٣'>رَأْسَكَ</قول> أَوْ <قول هوية='٠٤٦٩٩'>الْجِدَاْرَ</قول> كَاْنَ إِظْهَاْرُ الْفِعْلِ جَاْئِزًا</مقطع>
  <مقطع هوية='٣٢٩١٠'>نَحْوَ قَوْلِكَ <قول هوية='٥٦٢٤٦'>اتَّقِ رَأْسَكَ</قول>
  وَ<قول هوية='٢٢٣٣٥'>احْفَظْ نَفْسَكَ</قول>
  وَ<قول هوية='٨٦٠٢٦'>اتَّقِ الْجِدَاْرَ</قول></مقطع>
  <مقطع هوية='٩٣٦١٥'>فَلَمَّا ثَنَّيْتَ صَاْرَ بِمَنْزِلَةِ <حرف>إِيَّاْكَ</حرف></مقطع>
  <مقطع هوية='٩٥٧٧٩'>وَ<حرف>إِيَّاْكَ</حرف> بَدَلٌ مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
  <مقطع هوية='٣٥٠٨٠'>كَمَا كَاْنَتْ الْمَصَاْدِرُ كَذٰلِكَ نَحْوَ
  <قول هوية='٧١٣٣٤'>الْحَذَرَ الْحَذَرَ</قول></مقطع>
  <مقطع هوية='٢٢٨١٣'>وَمِمَّا جُعِلَ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
  <مقطع هوية='٨٥١٢١'>قَوْلُهُمْ <قول هوية='٨٤١١٣'>الْحَذَرَ الْحَذَرَ</قول>
  وَ<قول هوية='٣٦٠١٨'>النَّجَاْءَ النَّجَاْءَ</قول>
  وَ<قول هوية='٠٤١٣٠'>ضَرْبًا ضَرْبًا</قول></مقطع>
  <مقطع هوية='٥٠٧٥٨'>فَإِنَّمَا انْتَصَبَ هٰذَا عَلَى
  <قول هوية='٦٨٠٧٣'>الْزَمِ الْحَذَرَ</قول>
  وَ<قول هوية='٨٩١٣٦'>عَلَيْكَ النَّجَاْءَ</قول></مقطع>

  <مقطع هوية='٢٨٤٧٧'>وَلٰكِنَّهُمْ حَذَفُوْا لِأَنَّهُ صَاْرَ بِمَنْزِلَةِ
  <قول هوية='٦٨٨١٧'>افْعَلْ</قول></مقطع>
  <مقطع هوية='١٢٢٤٧'>وَدُخُوْلُ <حرف>الْزَمْ</حرف> وَ<حرف>عَلَيْكَ</حرف> عَلَى  <قول هوية='٠٣٧٨٣'>افْعَلْ</قول> مُحَاْلٌ</مقطع>
  <مقطع هوية='٣٧٤٤١'>وَمِنْ ثَمَّ قَاْلُوْا وَهُوَ لِـ<شاعر>عَمْرٍو بْنِ مَعْدِيْكَرِبَ</شاعر></مقطع>
  <شاهدة هوية='٩٥٦٠١' شاعر="عَمْرٌو بْنُ مَعْدِيْكَرِبَ">
    <بيت>
      <مصراع>أُرِيْدُ حِبَاْءَهُ وَيُرِيْدُ قَتْلِي</مصراع>
      <مصراع><ثبات>عَذِيْرَكَ</ثبات> مِنْ خَليْلِكَ مِنْ مُرَاْدِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٢٩٠٨٩'>وَقَاْلَ <شاعر>الْكُمَيْتُ</شاعر></مقطع>
  <شاهدة هوية='٨٩٧٩٢' شاعر="الْكُمَيْتُ">
    <بيت>
      <مصراع><ثبات>نَعَاْءِ</ثبات> جُذَاْمًا غَيْرَ مَوْتٍ وَلَا قَتْلِ</مصراع>
      <مصراع>وَلٰكِنْ فِرَاْقًا لِلدَّعَاْئِمِ وَالْأَصْلِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='١٣٥٥٧'>وَقَاْلَ <شاعر>ذُو الْإِصْبَعِ الْعَدْوَاْنِيُّ</شاعر></مقطع>
  <شاهدة هوية='١٥٢٣٩' شاعر="ذُو الْإِصْبَعِ الْعَدْوَاْنِيُّ">
    <بيت>
      <مصراع><ثبات>عَذِيْرَ</ثبات> الْحَيِّ مِنْ عَدْوَا</مصراع>
      <مصراع>نَ كَاْنُوْا حَيَّةَ الْأَرْضِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٦٣٠٠'>فَلَمْ يَجُزْ إِظْهَاْرُ الْفِعْلِ</مقطع>
