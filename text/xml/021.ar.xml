<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٥"
     درنبورج="١-٢٧"
     هارون="١-٦٩"
     يعقوب="١-١١٧"
     البكاء="١-١٣٥"
     رقم="٢١">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ الْإِضْمَارِ فِي <حرف>لَيْسَ</حرف> وَ<حرف>كَانَ</حرف></مقطع>
    <مقطع رقم="٢">كَالْإِضْمَارِ فِي <حرف>إِنَّ</حرف></مقطع>
  </عنوان>

  <مقطع رقم="٣">إِذَا قُلْتَ <قول رقم="١">إِنَّهُ مَنْ يَأْتِنَا نَأْتِهِ</قول>
  </مقطع>
  <مقطع رقم="٤">وَ<قول رقم="٢">إِنَّهُ أَمَةُ اللّٰهِ ذَاهِبَةٌ</قول>
  </مقطع>
  <هارون مجلد="١" صفحة="٦٩"/>
  <مقطع رقم="٥">فَمِنْ ذٰلِكَ قَوْلُ بَعْضِ الْعَرَبِ <قول رقم="٣">لَيْسَ خَلَقَ اللّٰهُ مِثْلَهُ</قول>
  </مقطع>
  <مقطع رقم="٦">فَلَوْلَا أَنَّ فِيْهِ إِضْمَارًا لَمْ يَجُزْ أَنْ تَذْكُرَ الْفِعْلَ</مقطع>
  <مقطع رقم="٧">وَلَمْ تُعْمِلْهُ فِي اسْمٍ</مقطع>
  <مقطع رقم="٨">وَلَكِنْ فِيْهِ مِنْ الْإِضْمَارِ مَِثْلُ مَا فِي <حرف>إِنَّهُ</حرف>
  </مقطع>
  <مقطع رقم="٩">وَسَوْفَ نُبَيَّنُ حَالَ هٰذَا فِي الْإِضْمَارِ وَكَيْفَ هُوَ إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٠">قَالَ الشَّاعِرُ وَهُوَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة رقم="١" xml:id="٢١-١">
    <بيت>
      <مصراع>فَأَصْبَحُوْا وَالنَّوَى عَالِيْ مُعَرَّسِهِمْ</مصراع>
      <مصراع>وَلَيْسَ كُلَّ النَّوَى تُلْقِي الْمَسَاكِيْنُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١">فَلَوْ كَانَ <حرف>كُلُّ</حرف> عَلَى <حرف>لَيْسَ</حرف> وَلَا إِضْمَارَ فِيْهِ لَمْ يَكُنْ إِلَّا الرَّفْعُ فِي <حرف>كُلِّ</حرف>
  </مقطع>
  <مقطع رقم="١٢">وَلَكَنَّهُ انْتَصَبَ عَلَى <حرف>تُلْقِي</حرف>
  </مقطع>
  <مقطع رقم="١٣">وَلَا يَجُوْزُ أَنْ تَحْمِلَ <حرف>الْمَسَاكِيْنَ</حرف> عَلَى <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="١٤">وَقَدْ قَدَّمْتَ فَجَعَلْتَ الَّذِيْ يَعْمَلُ فِيْهِ الْفِعْلُ الْآخِرُ يَلِي الْأَوَّلَ</مقطع>
  <مقطع رقم="١٥">وَهٰذَا لَا يَحْسُنُ</مقطع>
  <مقطع رقم="١٦">لَوْ قُلْتَ <قول رقم="٤">كَانَتْ زَيْدًا الْحُمَّى تَأْخُذُ</قول> أَوْ <قول رقم="٥">تَأْخُذُ الْحُمَّى</قول> لَمْ يَجُزْ وَكَانَ قَبِيْحًا</مقطع>
  <هارون مجلد="١" صفحة="٧٠"/>
  <مقطع رقم="١٧">وَمِثْلُ ذٰلِكَ فِي الْإِضْمَارِ قَوْلُ [بَعْضِ الشُّعَرَاءِ] الْعُجَيْرِ سَمِعْنَاهُ مِمَّنْ يُوْثَقُ بِعْرَبَيْتِهِ</مقطع>
  <شاهدة رقم="٢" xml:id="٢١-٢">
    <بيت>
      <مصراع>إِذَا مِتُّ كَانَ النَّاسُ صِنْفَانِ شَامِتٌ</مصراع>
      <مصراع>وَآخَرُ مُثْنٍ بِالَّذِيْ كُنْتُ أَصْنَعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨">أَضْمَرَ فِيْهًا</مقطع>
  <مقطع رقم="١٩">وَقَالَ بَعْضُهُمْ <قول رقم="٦">كَانَ أَنْتَ خَيْرٌ مِنْهُ</قول>
  </مقطع>
  <مقطع رقم="٢٠">كَأَنَّهُ قَالَ <قول رقم="٧">إِنَّهُ أَنْتَ خَيْرٌ مِنْهُ</قول>
  </مقطع>
  <مقطع رقم="٢١">وَمِثْلُهُ <آية سورة="٩" رقم="١١٧">كَادَ تَزِيْغُ قُلُوْبُ فَرِيْقٍ مِنْهُمْ</آية>
  </مقطع>
  <مقطع رقم="٢٢">وَجَازَ هٰذَا التَّفْسِيْرُ لِأَنَّ مَعْنَاهُ <قول رقم="٨">كَادَتْ قُلُوْبُ فَرِيْقٍ مِنْهُمْ تَزِيْغُ</قول>
  </مقطع>
  <مقطع رقم="٢٣">كَمَا قُلْتَ <قول رقم="٩">مَا كَانَ الطِّيْبُ إِلَّا الْمِسْكُ</قول>
  </مقطع>
  <مقطع رقم="٢٤">عَلَى إِعْمَالِ <قول رقم="١٠">مَا كَانَ الْأَمْرُ الطِّيْبُ إِلَّا الْمِسْكُ</قول>
  </مقطع>
  <مقطع رقم="٢٥">فَجَازَ هٰذَا إِذْ كَانَ مَعْنَاهُ <قول رقم="١١">مَا الطِّيْبُ إِلَّا الْمِسْكُ</قول>
  </مقطع>
  <مقطع رقم="٢٦">وَقَالَ هِشَامٌ أَخُوْ ذِيْ الرُّمَّةً</مقطع>
  <شاهدة رقم="٣" xml:id="٢١-٣">
    <بيت>
      <مصراع>هِيَ الشِّفَاءُ لِدَائِيْ لَوْ ظَفِرْتُ بِهًا</مصراع>
      <مصراع>وَلَيْسَ مِنْهَا شِفَاءُ الدَّاءِ مَبْذُولُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٧">وَلَا يَجُوْزُ هٰذَا فِي <حرف>مًا</حرف> فِي لُغَةِ أَهْلِ الْحِجَازِ</مقطع>
  <مقطع رقم="٢٨">لِأَنَّهُ لَا يَكُوْنُ فِيْهِ إِضْمَارٌ</مقطع>
  <مقطع رقم="٢٩">وَلَا يَجُوْزُ أَنْ تَقُوْلَ <قول رقم="١٢">مَا زَيْدًا عَبْدُ اللّٰهِ ضَارِبًا</قول>
  </مقطع>
  <مقطع رقم="٣٠">وَ<قول رقم="١٣">مَا زَيْدًا أَنَا قَاتِلًا</قول>
  </مقطع>
  <مقطع رقم="٣١">لِأَنَّهُ لَا يَسْتَقِيْمُ كَمَا لَمْ يَسْتَقِيْمْ فِي <حرف>كَانَ</حرف> وَ<حرف>لَيْسَ</حرف> أَنْ تُقَدِّمَ مَا يَعْمَلُ فِيْهِ الْآخِرُ</مقطع>
  <مقطع رقم="٣٢">فَإِنْ رَفَعْتَ الْخَبَرَ حَسُنَ حَمْلُهُ عَلَى اللُّغَةِ التَّمِيْمِيَّةِ</مقطع>
  <مقطع رقم="٣٣">كَمَا قُلْتَ <قول رقم="١٤">أَمَّا زَيْدًا فَأَنَا ضَارِبٌ</قول>
  </مقطع>
  <هارون مجلد="١" صفحة="٧١"/>
  <مقطع رقم="٣٤">كَأَنَّكَ لَمْ تَذْكُرْ <حرف>أَمَّا</حرف>
  </مقطع>
  <مقطع رقم="٣٥">وَكَأَنَّكَ لَمْ تَذْكُرْ <حرف>مَا</حرف>
  </مقطع>
  <مقطع رقم="٣٦">وَكَأَنَّكَ قُلْتَ <قول رقم="١٥">زَيْدًا أَنَا ضَارِبٌ</قول>
  </مقطع>
  <مقطع رقم="٣٧">وَقَالَ مُزَاحِمُ الْعُقَيْلِيّ</مقطع>
  <شاهدة رقم="٤" xml:id="٢١-٤">
    <بيت>
      <مصراع>وَقَالَوُا تَعَرَّفْهَا الْمَنِازِلَ مِنْ مِنْىً</مصراع>
      <مصراع>وَمَا كُلَّ مَنْ وَافَىْ مِنًى أَنَا عَارِفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٨">وَقَالَ بَعْضُهُمْ</مقطع>
  <شاهدة رقم="٥" xml:id="٢١-٥">
    <بيت>
      <مصراع>وَمَا كُلُّ مَنْ وَافَىْ مِنًى أَنَا عَارِفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٩">لَزِمَ اللُّغَةَ الْحِجَازِيَّةَ فَرَفَعَ</مقطع>
  <مقطع رقم="٤٠">كَأَنَّهُ قَالَ <قول رقم="١٦">لَيْسَ عَبْدُ اللّٰهِ أَنَا عَارِفٌ</قول>
  </مقطع>
  <مقطع رقم="٤١">فَأَضْمَرَ الْهَاءِ فِي <حرف>عَارِفٍ</حرف>
  </مقطع>
  <مقطع رقم="٤٢">وَكَانَ الْوَجْهُ <حرف>عَارْفُهُ</حرف>
  </مقطع>
  <مقطع رقم="٤٣">حَيْثُ لَمْ يُعْمَلْ <حرف>عَارِفٌ</حرف> فِي <حرف>كُلٍّ</حرف>
  </مقطع>
  <مقطع رقم="٤٤">وَكَانَ هٰذَا أَحْسَنَ مِنَ التَّقْدِيْمِ وَالتَّأْخِيْرِ</مقطع>
  <مقطع رقم="٤٥">لِأَنَّهُمْ قَدْ يَدَعُوْنَ هَذِهِ الْهَاءَ فِي كَلَامِهِمْ وَفِي الشَّعْرِ كَثِيْرًا</مقطع>
  <مقطع رقم="٤٦">وَذٰلِكَ لَيْسَ فِي شَيْءٍ مِنْ كَلَامِهِمْ</مقطع>
  <مقطع رقم="٤٧">وَلَا يَكَادُ يَكُوْنُ فِي شِعْرٍ</مقطع>
  <مقطع رقم="٤٨">وَسَتَرَى ذٰلِكَ إِنْ شَاءَ اللّٰهُ</مقطع>

