<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٥"
     درنبورج="١-٢٧"
     البكاء="١-١٣٥"
     هارون="١-٦٩"
     يعقوب="١-١١٧"
     رقم="٢١">
  <عنوان>
    <مقطع هوية='٦٦٩٠٥' رقم="١">هٰذَا بَاْبُ الْإِضْمَاْرِ فِي <حرف>لَيْسَ</حرف> وَ<حرف>كَاْنَ</حرف> كَالْإِضْمَاْرِ فِي <حرف>إِنَّ</حرف>
    </مقطع>
  </عنوان>
  <مقطع هوية='٩٨٥٧١' رقم="٢">إِذَا قُلْتَ <قول هوية='٨٧٥١٢' رقم="١">إِنَّهُ مَنْ يَأْتِنَا نَأْتِهِ</قول>
  </مقطع>
  <مقطع هوية='١٦٣٠٩' رقم="٣">وَ<قول هوية='١٤٨٠٤' رقم="٢">إِنَّهُ أَمَةُ اللّٰهِ ذَاهِبَةٌ</قول>
  </مقطع>
  <مقطع هوية='١٢١٧٩' رقم="٤">فَمِنْ ذٰلِكَ قَوْلُ بَعْضِ الْعَرَبِ <قول هوية='٢٧٦٧٤' رقم="٣">لَيْسَ خَلَقَ اللّٰهُ مِثْلَهُ</قول>
  </مقطع>
  <مقطع هوية='٤١٦٧٥' رقم="٥">فَلَوْلَا أَنَّ فِيْهِ إِضْمَاْرًا</مقطع>
  <مقطع هوية='٤٥١٤٥' رقم="٦">لَمْ يَجُزْ أَنْ تَذْكُرَ الْفِعْلَ</مقطع>
  <مقطع هوية='٠٠٦٩١' رقم="٧">وَلَمْ تُعْمِلْهُ فِي اسْمٍ</مقطع>
  <مقطع هوية='٦١٥٨٩' رقم="٨">وَلَكِنْ فِيْهِ مِنَ الْإِضْمَاْرِ مِثْلُ مَا فِي <حرف>إِنَّهُ</حرف>
  </مقطع>
  <مقطع هوية='٠٢٦٣٣' رقم="٩">وَسَوْفَ نُبَيَّنُ حَاْلَ هٰذَا فِي الْإِضْمَاْرِ وَكَيْفَ هُوَ</مقطع>
  <مقطع هوية='٧٩٩٩٦' رقم="١٠">إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع هوية='٣٨٦٨١' رقم="١١">قَاْلَ الشَّاْعِرُ وَهُوَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة هوية='٤٢٨٩٢' مقطع="١٢" رقم="١">
    <بيت>
      <مصراع>فَأَصْبَحُوْا وَالنَّوَى عَالِي مُعَرَّسِهِمْ</مصراع>
      <مصراع>وَلَيْسَ كُلَّ النَّوَى تُلْقِي الْمَسَاْكِيْنُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٢٠٥٧' رقم="١٣">فَلَوْ كَاْنَ <حرف>كُلٌّ</حرف> عَلَى <حرف>لَيْسَ</حرف> وَلَا إِضْمَاْرَ فِيْهِ</مقطع>
  <مقطع هوية='٩٣٧٢٨' رقم="١٤">لَمْ يَكُنْ إِلَّا الرَّفْعُ فِي <حرف>كُلٍّ</حرف>
  </مقطع>
  <مقطع هوية='١٠٠٨١' رقم="١٥">وَلَكَنَّهُ انْتَصَبَ عَلَى <حرف>تُلْقِي</حرف>
  </مقطع>
  <مقطع هوية='٣٣٤١٨' رقم="١٦">وَلَا يَجُوْزُ أَنْ تَحْمِلَ <حرف>الْمَسَاْكِيْنَ</حرف> عَلَى <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع هوية='٥٤١٨٤' رقم="١٧">وَقَدْ قَدَّمْتَ</مقطع>
  <مقطع هوية='٧١٩٦١' رقم="١٨">فَجَعَلْتَ الَّذِي يَعْمَلُ فِيْهِ الْفِعْلُ الْآخِرُ يَلِي الْأَوَّلَ</مقطع>
  <مقطع هوية='٨٣٤٩٨' رقم="١٩">وَهٰذَا لَا يَحْسُنُ</مقطع>
  <مقطع هوية='٢٨٧٦٣' رقم="٢٠">لَوْ قُلْتَ <قول هوية='٥٨٠٣٣' رقم="٤" ج="*">كَاْنَتْ زَيْدًا الْحُمَّى تَأْخُذُ</قول> أَوْ <حرف>تَأْخُذُ الْحُمَّى</حرف>
  </مقطع>
  <مقطع هوية='٨١٧٢٩' رقم="٢١">لَمْ يَجُزْ وَكَاْنَ قَبِيْحًا</مقطع>
  <مقطع هوية='٩٦٥٠٧' رقم="٢٢">وَمِثْلُ ذٰلِكَ فِي الْإِضْمَاْرِ قَوْلُ <!-- [بَعْضِ الشُّعَرَاءِ] -->الْعُجَيْرِ سَمِعْنَاْهُ مِمَّنْ يُوْثَقُ بِعْرَبِيَّتِهِ</مقطع>
  <شاهدة هوية='٥٦٧١٩' مقطع="٢٣" رقم="٢">
    <بيت>
      <مصراع>إِذَا مِتُّ <ثبات>كَاْنَ النَّاْسُ صِنْفَاْنِ</ثبات> شَاْمِتٌ</مصراع>
      <مصراع>وَآخَرُ مُثْنٍ بِالَّذِي كُنْتُ أَصْنَعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٨٣٧٤' رقم="٢٤">أَضْمَرَ فِيْهَا</مقطع>
  <مقطع هوية='١٠٠٢٣' رقم="٢٥">وَقَاْلَ بَعْضُهُمْ <قول هوية='٨٣٠٨٤' رقم="٥">كَاْنَ أَنْتَ خَيْرٌ مِنْهُ</قول>
  </مقطع>
  <مقطع هوية='٩٢٨٥٤' رقم="٢٦">كَأَنَّهُ قَاْلَ <قول هوية='٨٤٢٦٥' رقم="٦">إِنَّهُ أَنْتَ خَيْرٌ مِنْهُ</قول>
  </مقطع>
  <مقطع هوية='٠٩٠٩٣' رقم="٢٧">وَمِثْلُهُ <آية هوية='١٨٨٨٩' سورة="٩" آية="١١٧">كَاْدَ تَزِيْغُ قُلُوْبُ فَرِيْقٍ مِنْهُمْ</آية>
  </مقطع>
  <مقطع هوية='٤٥٨٢٥' رقم="٢٨">وَجَاْزَ هٰذَا التَّفْسِيْرُ لِأَنَّ مَعْنَاْهُ <قول هوية='٨١٠٧٧' رقم="٧">كَاْدَتْ قُلُوْبُ فَرِيْقٍ مِنْهُمْ تَزِيْغُ</قول>
  </مقطع>
  <مقطع هوية='٣٨٤٨٥' رقم="٢٩">كَمَا قُلْتَ <قول هوية='٨٤٢٤٠' رقم="٨">مَا كَاْنَ الطِّيْبُ إِلَّا الْمِسْكُ</قول>
  </مقطع>
  <مقطع هوية='٥٠٨٢٤' رقم="٣٠">عَلَى إِعْمَاْلِ <قول هوية='٣٥٤٩٧' رقم="٩">مَا كَاْنَ الْأَمْرُ الطِّيْبُ إِلَّا الْمِسْكُ</قول>
  </مقطع>
  <مقطع هوية='٤٤٩٥٩' رقم="٣١">فَجَاْزَ هٰذَا إِذْ كَاْنَ مَعْنَاْهُ <قول هوية='٥١٨٥٨' رقم="١٠">مَا الطِّيْبُ إِلَّا الْمِسْكُ</قول>
  </مقطع>
  <مقطع هوية='٥٧٣٦٦' رقم="٣٢">وَقَاْلَ هِشَاْمٌ أَخُو ذِي الرُّمَّةِ</مقطع>
  <شاهدة هوية='٧٣٠٢٠' مقطع="٣٣" رقم="٣">
    <بيت>
      <مصراع>هِيَ الشِّفَاْءُ لِدَاْئِي لَوْ ظَفِرْتُ بِهَا</مصراع>
      <مصراع>
        <ثبات>وَلَيْسَ مِنْهَا شِفَاْءُ الدَّاْءِ مَبْذُوْلُ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٥٩٧٦' رقم="٣٤">وَلَا يَجُوْزُ هٰذَا فِي <حرف>مَا</حرف> فِي لُغَةِ أَهْلِ الْحِجَاْزِ</مقطع>
  <مقطع هوية='١٥٢٤٢' رقم="٣٥">لِأَنَّهُ لَا يَكُوْنُ فِيْهِ إِضْمَاْرٌ</مقطع>
  <مقطع هوية='٢١٦١٤' رقم="٣٦">وَلَا يَجُوْزُ أَنْ تَقُوْلَ <قول هوية='٢٠٢٩٠' رقم="١١" ج="*">مَا زَيْدًا عَبْدُ اللهِ ضَاْرِبًا</قول>
  </مقطع>
  <مقطع هوية='٦٦٦٩٦' رقم="٣٧">وَ<قول هوية='٤٦٢٥١' رقم="١٢" ج="*">مَا زَيْدًا أَنَا قَاْتِلًا</قول>
  </مقطع>
  <مقطع هوية='٥١١٥٠' رقم="٣٨">لِأَنَّهُ لَا يَسْتَقِيْمُ</مقطع>
  <مقطع هوية='١٣٩١٣' رقم="٣٩">كَمَا لَمْ يَسْتَقِمْ فِي <حرف>كَاْنَ</حرف> وَ<حرف>لَيْسَ</حرف> أَنْ تُقَدِّمَ مَا يَعْمَلُ فِيْهِ الْآخِرُ</مقطع>
  <مقطع هوية='٥٥٠٣٢' رقم="٤٠">فَإِنْ رَفَعْتَ الْخَبَرَ حَسُنَ حَمْلُهُ عَلَى اللُّغَةِ التَّمِيْمِيَّةِ</مقطع>
  <مقطع هوية='٣٧٢٨٠' رقم="٤١">كَمَا قُلْتَ <قول هوية='٢٩٩٦٧' رقم="١٣">أَمَّا زَيْدًا فَأَنَا ضَاْرِبٌ</قول>
  </مقطع>
  <مقطع هوية='٩٢٥٨٤' رقم="٤٢">كَأَنَّكَ لَمْ تَذْكُرْ <حرف>أَمَّا</حرف>
  </مقطع>
  <مقطع هوية='٥٤٤٢٨' رقم="٤٣">وَكَأَنَّكَ لَمْ تَذْكُرْ <حرف>مَا</حرف>
  </مقطع>
  <مقطع هوية='٠٢٦٠٧' رقم="٤٤">وَكَأَنَّكَ قُلْتَ <قول هوية='٢٨٩٢٧' رقم="١٤">زَيْدًا أَنَا ضَاْرِبٌ</قول>
  </مقطع>
  <مقطع هوية='٧٥٥٣٣' رقم="٤٥">وَقَاْلَ مُزَاْحِمُ الْعُقَيْلِيُّ</مقطع>
  <شاهدة هوية='٧٦٤٦٧' مقطع="٤٦" رقم="٤">
    <بيت>
      <مصراع>وَقَاْلُوْا تَعَرَّفْهَا الْمَنِاْزِلَ مِنْ مِنْىً</مصراع>
      <مصراع>وَمَا كُلَّ مَنْ وَاْفَى مِنًى أَنَا عَاْرِفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٤٧٧٩' رقم="٤٧">وَقَالَ بَعْضُهُمْ</مقطع>
  <شاهدة هوية='٤٣١٥١' مقطع="٤٨" رقم="٥">
    <بيت>
      <مصراع>وَمَا كُلُّ مَنْ وَاْفَى مِنًى أَنَا عَاْرِفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٧٧٢' رقم="٤٩">لَزِمَ اللُّغَةَ الْحِجَاْزِيَّةَ فَرَفَعَ</مقطع>
  <مقطع هوية='٥٤٢٤٧' رقم="٥٠">كَأَنَّهُ قَاْلَ <قول هوية='٧٢١٩٦' رقم="١٥">لَيْسَ عَبْدُ اللّٰهِ أَنَا عَاْرِفٌ</قول>
  </مقطع>
  <مقطع هوية='٠٨٩٨٨' رقم="٥١">فَأَضْمَرَ الْهَاْءَ فِي <حرف>عَاْرِفٍ</حرف> وَكَاْنَ الْوَجْهُ <حرف>عَاْرِفُهُ</حرف>
  </مقطع>
  <مقطع هوية='٣٤٠٧٢' رقم="٥٢">حَيْثُ لَمْ يُعْمِلْ <حرف>عَاْرِف</حرف> فِي <حرف>كُلٍّ</حرف>
  </مقطع>
  <مقطع هوية='٨٧٥٨٥' رقم="٥٣">وَكَاْنَ هٰذَا أَحْسَنَ مِنَ التَّقْدِيْمِ وَالتَّأْخِيْرِ</مقطع>
  <مقطع هوية='٨٩٨٣٢' رقم="٥٤">لِأَنَّهُمْ قَدْ يَدَعُوْنَ هَذِهِ الْهَاْءَ فِي كَلَاْمِهِمْ وَفِي الشِّعْرِ كَثِيْرًا</مقطع>
  <مقطع هوية='٨٠٠٦٠' رقم="٥٥">وَذٰلِكَ لَيْسَ فِي شَيْءٍ مِنْ كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='٥٨٧٠٤' رقم="٥٦">وَلَا يَكَاْدُ يَكُوْنُ فِي شِعْرٍ</مقطع>
  <مقطع هوية='٧٢٩٣٤' رقم="٥٧">وَسَتَرَى ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
