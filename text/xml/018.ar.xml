  <عنوان>
    <مقطع هوية='٦٢٧٧٩'>هٰذَا بَاْبٌ تُخْبِرُ فِيْهِ عَنِ النَّكِرَةِ بِنَكِرَةٍ</مقطع>
  </عنوان>
  <مقطع هوية='٥٥٧٧١'>وَذَلِكَ قَوْلُكَ <قول هوية='٩١٩٣٢'>مَا كَاْنَ أَحَدٌ مِثْلَكَ</قول>
  </مقطع>
  <مقطع هوية='٨٣٧٢٨'>وَ<قول هوية='٠٧٤٩٤'>مَا كَاْنَ أَحَدٌ خَيْرًا مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٨١١٤٣'>وَ<قول هوية='٣٣٩١٩'>مَا كَاْنَ أَحَدٌ مُجْتَرِئًا عَلَيْكَ</قول>
  </مقطع>
  <مقطع هوية='٩٨٣٤٧'>وَإِنَّمَا حَسُنَ الْإِخْبَاْرُ هٰهُنَا عَنِ النَّكِرَةِ</مقطع>
  <مقطع هوية='٨٧٥١٧'>حَيْثُ أَرَدْتَ أَنْ تَنْفِيَ أَنْ يَكُوْنَ فِي مِثْلِ حَاْلِهِ شَىْءٌ أَوْ فَوْقَهُ</مقطع>
  <مقطع هوية='٤٩٩٨٤'>لِأَنَّ الْمُخَاْطَبَ قَدْ يَحْتَاْجُ إِلَى أَنْ تُعْلِمَهُ مِثْلَ هَذَا</مقطع>
  <مقطع هوية='٤٣٤٩٠'>وَإِذَا قُلْتَ <قول هوية='٧٦٠٤٦' ج="?">كَاْنَ رَجُلٌ ذَاهِبًا</قول>
  </مقطع>
  <مقطع هوية='٧٠٧٧٩'>فَلَيْسَ فِي هٰذَا شَيْءٌ تُعْلِمُهُ كَاْنَ جَهِلَهُ</مقطع>
  <مقطع هوية='٢٧٩٩٧'>وَلَوْ قُلْتَ <قول هوية='٣٢١٠٥'>كَاْنَ رَجُلٌ مِنْ آلِ فُلَاْنٍ فَاْرِسًا</قول>
  </مقطع>
  <مقطع هوية='٦٦٠٢٣'>حَسُنَ لِأَنَّهُ قَدْ يَحْتَاْجُ إِلَى أَنْ تُعِلْمَهُ</مقطع>
  <مقطع هوية='٤٢٧٧٢'>أَنَّ ذَلِكَ فِي آلِ فُلَانٍ وَقَدْ يَجَهْلُهُ</مقطع>
  <مقطع هوية='٥١٨٧٢'>وَلَوْ قُلْتَ <قول هوية='٦١٢٤٥' ج="*">كَاْنَ رَجُلٌ فِي قَوْمٍ فارِسًا</قول>
  </مقطع>
  <!-- البكاء: عاقلًا -->
  <مقطع هوية='١٩٥١١'>لَمْ يَحْسُنْ لِأَنَّهُ</مقطع>
  <مقطع هوية='٢٤٥٧٤'>لَا يُسْتَنْكَرُ أَنْ يَكُوْنَ فِي الدُّنْيَا فَاْرِسًا وَأَنْ يَكُوْنَ مِنْ قَوْمٍ</مقطع>
  <مقطع هوية='٠٩٩٧٠'>فَعَلَى هٰذَا النَّحْوِ يَحْسُنُ وَيَقْبُحُ</مقطع>
  <مقطع هوية='٥٤٣٨٥'>وَلَا يَجُوْزُ لِـ<حرف>أَحَدٍ</حرف> أَنْ تَضَعَهُ فِي مَوْضِعِ وَاْجِبٍ</مقطع>
  <مقطع هوية='٣٠٩٤٩'>لَوْ قُلْتَ <قول هوية='١٩٤٠٢' ج="*">كَاْنَ أَحَدٌ مِنْ آلِ فُلَاْنٍ</قول>
  </مقطع>
  <مقطع هوية='٦٨٨١٣'>لَمْ يَجُزْ لِأَنَّهُ إِنَّمَا وَقَعَ فِي كَلَاْمِهِمْ نَفْيًا عَامًّا</مقطع>
  <مقطع هوية='٧٤٦٢٧'>يَقُوْلُ الرَّجُلُ <قول هوية='٠٠٧٢١'>أَتَاْنِي رَجُلٌ</قول> يُرِيْدُ وَاْحِدًا فِي الْعَدَدِ لَا اثْنَيْنِ</مقطع>
  <مقطع هوية='٩٩٦٠٠'>فَيُقَاْلُ <قول هوية='٣٩٣٣٠'>مَا أَتَاْكَ رَجُلٌ</قول> أَيْ أَتَاْكَ أَكْثَرُ مِنْ ذَلِكَ</مقطع>
  <مقطع هوية='١٦٥٠٨'>أَوْ يَقُوْلُ <قول هوية='١٢٣١٢'>أَتَاْنِي رَجُلٌ لَا امْرَأَةٌ</قول></مقطع>
  <مقطع هوية='٩٢٦٣٢'>فَيُقَاْلُ <قول هوية='٣٩٧٤٢' مثال="٠">مَا أَتَاْكَ رَجُلٌ</قول> أَيْ اِمْرَأَةٌ أَتَتْكَ</مقطع>
  <مقطع هوية='٣٤٦٠٦'>وَيَقُوْلُ <قول هوية='٥١١٧٩'>أَتَاْنِي الْيَوْمَ رَجُلٌ</قول> أَيْ فِي قُوَّتِهِ وَنَفَاْذِهِ</مقطع>
  <مقطع هوية='١٧٣٩٤'>فَتَقُوْلُ <قول هوية='٦٤١١٤' مثال="٠">مَا أَتَاْكَ رَجُلٌ</قول> أَيْ أَتَاْكَ الضُّعَفَاْءُ</مقطع>
  <مقطع هوية='٩٣٢٦٧'>فَإِذَا قَالَ <قول هوية='٥٨٣٠٧'>مَا أَتَاْكَ أَحَدٌ</قول></مقطع>
  <مقطع هوية='١٩٧٦٦'>صَاْرَ نَفْيًا عَامًّا لِهَذَا كُلِّهِ</مقطع>
  <مقطع هوية='٢١٥٨٣'>فَإِنَّمَا مَجْرَاهُ فِي الْكَلَامِ هَذَا</مقطع>
  <مقطع هوية='٤٩٣٦١'>وَلَوْ قَالَ <قول هوية='٦٣٥١١'>مَا كَاْنَ مِثْلُكَ أَحَدًا</قول>
  </مقطع>
  <مقطع هوية='٣٨٥١٥'>أَوْ <قول هوية='٥١١٧٣'>مَا كَاْنَ زَيْدٌ أَحَدًا</قول>
  </مقطع>
  <مقطع هوية='٣٧٧٢٢'>كَاْنَ نَاْقِضًا لِأَنَّهُ قَدْ عُلِمَ</مقطع>
  <مقطع هوية='٦٦٥٦٢'>أَنَّهُ لَا يَكُوْنُ زَيْدٌ وَلَا مِثْلُهُ إِلَّا مِنَ النَّاْسِ</مقطع>
  <مقطع هوية='١٩٩١٣'>وَلَوْ قُلْتَ <قول هوية='٥٣٥٣٩'>مَا كَاْنَ مِثْلَكَ الْيَوْمَ أَحَدٌ</قول>
  </مقطع>
  <مقطع هوية='٦٦٦٢٩'>فَإِنَّهُ يَكُوْنُ أَنْ لَا يَكُوْنَ فِي اليَوْمِ إِنْسْاْنٌ عَلَى حَاْلِهِ</مقطع>
  <مقطع هوية='٥٧٧٧٥'>إِلَّا أَنْ تَقُوْلَ <قول هوية='٣٢١٨٧'>مَا كَاْنَ زَيْدٌ أَحَدًا</قول> أَيْ مِنَ الْأَحَدِينَ</مقطع>
  <مقطع هوية='٨٤٠٨٣'>وَ<قول هوية='٢٣٠٣٣'>مَا كَاْنَ مِثْلُكَ أَحَدًا</قول> عَلَى وَجْهِ تَصْغِيْرِهِ</مقطع>
  <مقطع هوية='٦٤٤٣١'>فَتَصِيْرُ كَأَنَّكَ قُلْتَ <قول هوية='٤٥٨٨٥'>مَا ضَرَبَ زَيْدٌ أَحَدًا</قول>
  </مقطع>
  <مقطع هوية='٥٢٣٣٤'>وَ<قول هوية='٣٥٦٨٧'>مَا قَتَلَ مِثْلُكَ أَحَدًا</قول>
  </مقطع>
  <مقطع هوية='٤٧١١٣'>وَالتَّقْدِيْمُ وَالتَّأْخِيْرُ فِي هَذَا</مقطع>
  <مقطع هوية='٢٢٦١٣'>بِمَنْزِلَتِهِ فِي الْمَعْرِفَةِ</مقطع>
  <مقطع هوية='١٨٦٩٧'>وَمَا ذَكَرْتُ لَكَ مِنْ الْفِعْلِ</مقطع>
  <مقطع هوية='٢٢٩٦٨'>وَحَسُنَتْ النَّكِرَةُ هٰهُنَا فِي هٰذَا الْبَاْبِ</مقطع>
  <مقطع هوية='٦٣٦٨٨'>لِأَنَّكَ لَمْ تَجْعَلْ الْأَعْرَفَ فِي مَوْضِعِ الْأَنْكَرِ</مقطع>
  <مقطع هوية='٩١٤١٠'>وَهُمَا مُتَكَاْفِئَاْنِ كَمَا تَكَاْفَأَتِ الْمَعْرِفَتَاْنِ</مقطع>
  <مقطع هوية='٠٧٣٨٩'>وَلِأَنَّ الْمُخَاْطَبَ قَدْ يَحْتَاْجُ إِلَى عِلْمِ مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٥٩٢٣٦'>وَقَدْ عَرَفَ مَنْ تَعْنِي بِذَلِكَ كَمَعْرِفَتِكَ</مقطع>
  <مقطع هوية='١٤٠١٩'>وَتَقُوْلُ <قول هوية='٧٨٥٩٥'>مَا كَاْنَ فِيْهَا أَحَدٌ خَيْرٌ مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='١٧٧٦٢'>وَ<قول هوية='٩٠١٨٠'>مَا كَاْنَ أَحَدٌ مِثْلُكَ فِيْهَا</قول>
  </مقطع>
  <مقطع هوية='٣٦٣٤٠'>وَ<قول هوية='٧٢٤٨٨'>لَيْسَ أَحَدٌ فِيْهَا خَيْرٌ مِنْكَ</قول></مقطع>
  <مقطع هوية='٢١٣٨٤'>إِذَا جَعَلْتَ <حرف>فِيْهَا</حرف> مُسْتَقَرًّا</مقطع>
  <مقطع هوية='١٥٤٣١'>وَلَمْ تَجْعَلْهُ عَلَى قَوْلِكَ <قول هوية='١٠٠٧٩'>فِيْهَا زَيْدٌ قَائِمٌ</قول>
  </مقطع>
  <مقطع هوية='٧٣٣٣٨'>أَجْرَيْتَ الصِّفَةَ عَلَى الاسْمِ</مقطع>
  <مقطع هوية='١٦٩٣٩'>فَإِنْ جَعَلْتَهُ عَلَى قَوْلِكَ <حرف>فِيْهَا زَيْدٌ قَائِمٌ</حرف> نَصَبْتَ</مقطع>
  <مقطع هوية='٥٧٣٨٨'>تَقُوْلُ <قول هوية='٩١٥٤١'>مَا كَاْنَ فِيْهَا أَحَدٌ خَيْرًا مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='١٨٦٤٣'>وَ<قول هوية='٣٥٥٠٢'>مَا كَاْنَ أَحَدٌ خَيْرًا مِنْكَ فِيْهَا</قول>
  </مقطع>
  <مقطع هوية='٩١١٧٤'>إِلَّا أَنَّكَ إِذَا أَرَدْتَ الْإِلْغَاءَ</مقطع>
  <مقطع هوية='٢٨٢٩٩'>فَكُلَّمَا أَخَّرْتَ الَّذِي تُلْغِيْهِ كَاْنَ أَحْسَنَ</مقطع>
  <مقطع هوية='٧١٨٥٤'>وَإِذَا أَرَدْتَ أَنْ يَكُوْنَ مُسْتَقَرًّا تَكْتَفِي بِهِ</مقطع>
  <مقطع هوية='٨٧٣٧٢'>فَكُلَّمَا قَدَّمْتَهُ كَاْنَ أَحْسَنَ</مقطع>
  <مقطع هوية='١٣٥٣٧'>لِأَنَّهُ إِذَا كَاْنَ عَاْمِلًا في شَيْءٍ قَدَّمْتَهُ</مقطع>
  <مقطع هوية='٢٠٦٤٨'>كَمَا تُقَدِّمُ <حرف>أَظُنُّ</حرف> وَ<حرف>أَحْسَبُ</حرف>
  </مقطع>
  <مقطع هوية='٤٩٦٦٤'>وَإِذَا أَلْغَيْتَ أَخَّرْتَهُ كَمَا تُؤَخِّرُهُمَا</مقطع>
  <مقطع هوية='٧١٢٢٨'>لِأَنَّهُمَا لَيْسَا يَعْمَلَانِ شَيْئًا</مقطع>
  <مقطع هوية='٨٠٧٠٦'>وَالتَّقْدِيْمُ هٰهُنَا وَالتَّأْخِيْرُ</مقطع>
  <مقطع هوية='٥٦٥٩١'>فِيْمَا يَكُوْنُ ظَرْفًا أَوْ يَكُوْنُ اسْمًا</مقطع>
  <مقطع هوية='٤٧٧٨٦'>فِي الْعِنَايَةِ وَالاهْتِمَامِ</مقطع>
  <مقطع هوية='٧٠٦٢٩'>مِثْلُهُ فِيْمَا ذَكَرْتُ لَكَ فِي بَاْبِ الْفَاْعِلِ وَالْمَفْعُوْلِ</مقطع>
  <مقطع هوية='٠٩٩٩٨'>وَجَمِيِْعُ مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٦٣٨٨٠'>مِنَ التَّقْدِيْمِ وَالتَّأْخِيْرِ وَالْإِلْغَاْءِ وَالاسْتِقْرِاْرِ</مقطع>
  <مقطع هوية='٨٦٤٣٨'>عَرَبِِيٌّ جَيِّدٌ كَثِيْرٌ</مقطع>
  <مقطع هوية='٣٠٦٣٤'>فَمِنْ ذَلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='٦٤٩٨٣'><آية هوية='٣٧٥٣٥' سورة="١١٢" آية="٤">وَلَمْ يَكُنْ لَهُ كُفُوًا أَحَدٌ</آية></مقطع>
  <مقطع هوية='٧٠٢٣٥'>وَأَهْلُ الْجَفَاْءِ مِنَ الْعَرَبِ يَقُوْلُوْنَ</مقطع>
  <مقطع هوية='٧٥٧٣٠'><قول هوية='٩٤٩٢٤'>وَلَمْ يَكُنْ كُفُوًا لَهُ أَحَدٌ</قول></مقطع>
  <مقطع هوية='٨٣٢١٢'>كَأَنَّهُمْ أَخَّرُوْهَا حَيْثُ كَاْنَتْ غَيْرَ مُسْتَقَرَّةٍ</مقطع>
  <مقطع هوية='٢٨٢٤٠'>وَقَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة هوية='٧٩٤٧٤'>
    <بيت>
      <مصراع>لَتَقْرُبِنَّ قَرَبًا جُلْذِيًّا</مصراع>
      <مصراع>مَا دَاْمَ فِيْهِنَّ فَصِيْلٌ حيَّا</مصراع>
    </بيت>
    <بيت>
      <مصراع>فَقَدْ دَجَا اللَّيْلُ فَهَيَّا هَيَّا</مصراع>
    </بيت>
  </شاهدة>
