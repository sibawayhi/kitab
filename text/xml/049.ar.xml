    <عنوان>
       <مقطع هوية='٥٧٤٧٩'>وَهٰذَا بَاْبٌ مِنَ الْفِعْلِ سُمِّيَ الْفِعْلُ فِيْهِ بِأَسْمَاْءٍ مُضَاْفَةٍ</مقطع>
       <مقطع هوية='٩٨٢٩٣'>لَيْسَتْ مِنْ أَمْثِلَةِ الْفِعْلِ الْحَاْدِثِ</مقطع>
   </عنوان>
    <مقطع هوية='٩٠٤١٢'>وَلَكِنَّهَا بِمَنْزِلَةِ الْأَسْمَاْءِ الْمُفْرَدَةِ الَّتِي كَاْنَتْ لِلْفِعْلِ</مقطع>
    <مقطع هوية='٣١٦٢٣'>نَحْوُ <حرف>رُوَيْدَ</حرف> وَ<حرف>حَيَّهَلَ</حرف></مقطع>
    <مقطع هوية='٨٣٤٠٦'>وَمَجْرَاْهُنَّ وَاْحِدٌ</مقطع>
    <مقطع هوية='٣٠٧٦٤'>وَمَوْضِعُهُنَّ مِنَ الْكَلَاْمِ الْأَمْرُ وَالنَّهْيُ</مقطع>
    <مقطع هوية='٧٥٤٣١'>إِذَا كَاْنَتْ لِلْمُخَاْطَبِ الْمَأْمُوْرِ وَالْمَنْهِيِّ</مقطع>
    <مقطع هوية='٠٤٢٨٩'>وَإِنَّمَا اسْتَوَتْ هِيَ وَ<حرف>رُوَيْدَ</حرف>
    وَمَا أَشْبَهَ  <حرف>رُوَيْدَ</حرف></مقطع>
   <مقطع هوية='٢٠٢٥٣'>كَمَا اسْتَوَى الْمُفْرَدُ وَالْمُضَاْفُ
   <!-- <ص ماْدَة="فرد"><متن>الْمُفْرَدُ</متن></ص> -->
   <!-- وَ<ص ماْدَة="ضيْف"><متن>الْمُضَاْفُ</متن></ص> -->
   إِذَا كَاْنَا اسْمَيْنِ</مقطع>
    <مقطع هوية='٢٦١٤٠'>نَحْوُ  <حرف>عَبْدُ اللهِ</حرف> وَ<حرف>زَيْدٌ</حرف>
   </مقطع>
    <مقطع هوية='٤٥٥٣٢'>مَجْرَاْهُمَا فِي الْعَرَبِيَّةِ سَوَاْءٌ</مقطع>
    <مقطع هوية='٩١٥٥٥'>وَمِنْهَا مَا يَتَعَدَّى الْمَأْمُوْرَ إِلَى مَأْمُوْرٍ بِهِ
    <!-- <ص ماْدَة="أَمْر"><متن>الْمَأْمُوْرَ</متن></ص> -->
    <!-- إِلَى -->
    <!-- <ص ماْدَة="أَمْر"><متن>مَأْمُوْرٍ بِهِ</متن></ص> -->
   </مقطع>
   <مقطع هوية='٨٣٣٠٩'>وَمِنْهَا مَا يَتَعَدَّى الْمَنْهِيَّ إِلَى الْمَنْهِيِّ عَنْهُ
   <!-- <ص ماْدَة="نهِيَ"><متن>الْمَنْهِيِّ</متن></ص> -->
   <!-- إِلَى -->
   <!-- <ص ماْدَة="نهِيَ"><متن>الْمَنْهِيِّ عَنْهُ</متن></ص> -->
   </مقطع>
    <مقطع هوية='٥٨٠١٠'>وَمِنْهَا مَا لَا يَتَعَدَّى الْمَأْمُوْرَ وَلَا الْمَنْهِيَّ</مقطع>

    <مقطع هوية='٠٠٢٤٦'>فَأَمَّا مَا يَتَعَدَّى الْمَأْمُوْرَ إِلَى مَأْمُوْرٍ بِهِ</مقطع>
    <مقطع هوية='٨٥٤٥٢'>فَهُوَ قَوْلُكَ <قول هوية='٤٠٤٢٣'>عَلَيْكَ زَيْدًا</قول></مقطع>
    <مقطع هوية='١٩٨٥٠'>وَ<قول هوية='٤٠٥٤٦'>دُوْنَكَ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٨٢٢٥١'>وَ<قول هوية='٢٥٨٨٤'>عِنْدَكَ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٠٨٣٠٧'>تَأْمُرُهُ بِهِ</مقطع>
    <مقطع هوية='٥٠١١٩'>حَدَّثَنَا بِذٰلِكَ أَبُوْ الْخَطَّاْبِ</مقطع>

    <مقطع هوية='٤٠٢٣٨'>وَأَمَّا مَا تَعَدَّى الْمَنْهِيَّ إِلَى مَنْهِيٍّ عَنْهُ</مقطع>
    <مقطع هوية='٢٢٨٦١'>فَقَوْلُكَ <قول هوية='٤٠٤٧١'>حَذَرَكَ زَيْدًا</قول></مقطع>
    <مقطع هوية='٤٢٢٦٣'>وَ<قول هوية='٥٣٠٢٦'>حَذَاْرَكَ زَيْدًا</قول></مقطع>
    <مقطع هوية='٠٠٧٧٢'>سَمِعْنَاْهُمَا مِنَ الْعَرَبِ</مقطع>
    <مقطع هوية='٩٠٢٦٦'>وَأَمَّا مَاْلْا يَتَعَدَّى الْمَأْمُوْرَ وَلَا الْمَنْهِيَّ</مقطع>
    <مقطع هوية='٠٥٥٧٦'>فَقَوْلُكَ <قول هوية='٧٧١٧٥'>مَكَاْنَكَ</قول></مقطع>
    <مقطع هوية='٧١٩١٦'>وَ<قول هوية='٧٢٥٦٦'>بَعْدَكَ</قول></مقطع>
    <مقطع هوية='٥٥٤٢٠'>إِذَا قُلْتَ <حرف>تَأَخَّرْ</حرف> أَوْ حَذَّرْتَهُ شَيْئًا خَلْفَهُ</مقطع>
    <مقطع هوية='٨٤٢٩٥'>وَكَذٰلِكَ <قول هوية='٨٧٩٦٠'>عِنْدَكَ</قول></مقطع>
    <مقطع هوية='٠٩٤٩٤'>إِذَا كُنْتَ تُحَذِّرُهُ مِنْ بَيْنِ يَدَيْهِ شَيْئًا</مقطع>
    <مقطع هوية='٩١١٣٠'>أَوْ تَأْمُرُهُ أَنْ يَتَقَدَّمَ</مقطع>
    <مقطع هوية='٩٨٧٧٧'>وَكَذٰلِكَ <قول هوية='٠٥٠٦٠'>فَرَطَكَ</قول></مقطع>
    <مقطع هوية='١٥٢١٣'>إِذَا كُنْتَ تُحَذِّرُهُ مِنْ بَيْنَ يَدَيْهِ شَيْئًا</مقطع>
    <مقطع هوية='١٢٩٥٣'>أَوْ تَأْمُرُهُ أَنْ يَتَقَدَّمَ</مقطع>
    <مقطع هوية='٥٥٨٩٦'>وَمِثْلُهَا <قول هوية='٤١١٤٠'>أَمَاْمَكَ</قول>
   </مقطع>
    <مقطع هوية='٠٦٧٠٨'>إِذَا كُنْتَ تُحَذِّرُهُ أَوْ تُبَصِّرُهُ شَيْئًا</مقطع>
    <مقطع هوية='٦٥٩٩٧'>وَ<قول هوية='٤٥٦٠٨'>إِلَيْكَ</قول> إِذَا قُلْتَ <قول هوية='٤٥١٣٢'>تَنَحِّ</قول>
   </مقطع>
    <مقطع هوية='٠٣٣٨٢'>وَ<قول هوية='٩٤٢٧٤'>وَرَاْءَكَ</قول> إِذَا قُلْتَ <قول هوية='٦٥١٨٧'>افْطُنْ لِمَا خَلْفَكَ</قول>
   </مقطع>
    <مقطع هوية='٠٣٢٩٥'>حَدَّثَنَا أَبُوْ الْخَطَّاْبِ أَنَّهُ سَمِعَ مِنَ الْعَرَبِ مَنْ يُقَاْلُ لَهُ <قول هوية='٠٧٨٢٢'>إِلَيْكَ</قول>
   </مقطع>

    <مقطع هوية='٢٩٣٤٢'>فَيَقُوْلُ <قول هوية='١٩٨٨٨'>إِلَيَّ</قول></مقطع>
    <مقطع هوية='٤٧٣٤٣'>كَأَنَّهُ قِيْلَ لَهُ تَنَحِّ</مقطع>
    <مقطع هوية='٧٤٢٣١'>فَقَاْلَ <قول هوية='٤٣٨٨٨'>أَتَنَحَّى</قول></مقطع>
    <مقطع هوية='٠٩٤٩٢'>وَلَا يُقَاْلُ إِذَا قِيْلَ لِأَحَدِهِمْ <قبس>دُوْنَكَ</قبس>
    <حرف ج="*">دُوْنِي</حرف> وَلَا <حرف ج="*">عَلَيَّ</حرف></مقطع>
    <مقطع هوية='٩١١١١'>هٰذَا النَّحْوُ إِنَّمَا سَمِعْنَاْهُ فِي هٰذَا الْحَرْفِ وَحْدَهُ</مقطع>
    <مقطع هوية='٠٨٠١٢'>وَلَيْسَ لَهَا قُوَّةُ الْفِعْلِ فَتُقَاْسُ</مقطع>

    <مقطع هوية='٠٢٢٦٩'>وَاعْلَمْ أَنَّ هَذِهِ الْأَسْمَاْءَ الْمُضَاْفَةَ</مقطع>
    <مقطع هوية='٤٧٢٩٣'>بِمَنْزِلَةِ الْأَسْمَاْءِ الْمُفْرَدَةِ</مقطع>
    <مقطع هوية='٣٣٤١٢'>فِي الْعَطْفِ وَالصِّفَاْتِ</مقطع>
    <مقطع هوية='٨٨٠١٦'>وَفِيْمَا قَبُحَ فِيْهَا وَحَسُنَ</مقطع>
    <مقطع هوية='٨٢١٧٤'>لِأَنَّ الْفَاْعِلَ الْمَأْمُوْرَ وَالْفَاْعِلَ الْمَنْهِيَّ</مقطع>
    <مقطع هوية='٩٨١١٧'>فِي هٰذَا الْبَاْبِ مُضْمَرَاْنِ فِي النِّيَّةِ</مقطع>
    <مقطع هوية='٥٨٧١٩'>وَلَا يَجُوْزُ أَنْ تَقُوْلَ <قول هوية='٩٣٦٣٤'>رُوَيْدَهُ زَيْدًا</قول> وَ<قول هوية='٩٩٦٠٨'>دُوْنَهُ عَمْرًا</قول>
   </مقطع>
    <مقطع هوية='٦٧٨٨٣'>وَأَنْتَ تُرِيْدُ غَيْرَ الْمُخَاْطَبِ</مقطع>
    <مقطع هوية='٠٧٩٠٩'>لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا يَتَصَرَّفُ تَصَرُّفَهُ</مقطع>
    <مقطع هوية='٦٦٢٢٤'>وَحَدَّثَنِي مَنْ سَمِعَهُ أَنَّ بَعْضَهُمْ قَاْلَ <قول هوية='٦٧٠٢٩'>عَلَيْهِ رَجُلًا لَيْسَنِي</قول></مقطع>
    <مقطع هوية='٩٢٦٥٢'>وَهٰذَا قَلِيْلٌ شَبَّهُوْهُ بِالْفِعْلِ</مقطع>

    <مقطع هوية='٤٠٠٧٥'>وَقَدْ يَجُوْزُ أَنْ تَقُوْلَ <قول هوية='٣٤٣٢٤'>عَلَيْكُمْ أَنْفُسِكُمْ</قول> وَ<حرف>أَجْمَعِيْنَ</حرف></مقطع>
    <مقطع هوية='٩٧٨٩١'>فَتَحْمِلَهُ عَلَى الْمُضْمَرِ الْمَجْرُوْرِ الَّذِي ذَكَرْتَهُ لِلْمُخَاْطَبَةِ</مقطع>
    <مقطع هوية='٥٦٦٦٣'>كَمَا حَمَلْتَهُ عَلَى <حرف>لَكَ</حرف> حِيْنَ ذَكَرْتَهَا بَعْدَ  <حرف>هَلُمَّ</حرف></مقطع>
    <مقطع هوية='٩٧٢٨٠'>وَلَمْ تَحْمِلْ عَلَى الْمُضْمَرِ الْفَاْعِلِ فِي النِّيَّةِ</مقطع>
    <مقطع هوية='٧٧١٧٦'>فَجَاْزَ ذٰلِكَ</مقطع>
    <مقطع هوية='٤١٩٣٩'>وَيُدُلُّكَ عَلَى أَنَّكَ إِذَا قُلْتَ <حرف>عَلَيْكَ</حرف></مقطع>
    <مقطع هوية='٨٦٥٩٧'>فَقَدْ أَضْمَرْتَ فَاْعِلًا فِي النِّيَّةِ</مقطع>
    <مقطع هوية='٧٤٣٨٣'>وَإِنَّمَا الْكَاْفُ لِلْمُخَاْطَبَةِ</مقطع>
    <مقطع هوية='٨١٨٤٣'>قَوْلُكَ <قول هوية='٤٣٠٦٩'>عَلَيَّ زَيْدًا</قول></مقطع>
    <مقطع هوية='٢٨١٠٢'>وَإِنَّمَا أَدْخَلْتَ الْيَاْءَ عَلَى مِثْلِ قَوْلِكَ لِلْمَأْمُوْرِ <قول هوية='٩٨٨٩٦'>أَوِّلْنِي زَيْدًا</قول></مقطع>
    <مقطع هوية='٣١١٧٣'>فَلَوْ قُلْتَ <حرف>أَنْتَ نَفْسُكَ</حرف> لَمْ يَكُنْ إِلَا رَفْعًا</مقطع>
    <مقطع هوية='٥٨٠٢٢'>وَلَوْ قَاْلَ <حرف>أَنَا نَفْسِي</حرف> لَمْ يَكُنْ إِلَا جَرًّا</مقطع>
    <مقطع هوية='٩٥٥١٥'>أَلَا تِرى أَنَّ الْيَاْءَ وَالْكَاْفَ</مقطع>
    <مقطع هوية='١١٥١٨'>إِنَّمَا جَاْءَتَا لِتَفْصِلَا بَيْنَ الْمَأْمُوْرِ وَالْأَمْرِ فِي الْمُخَاْطَبَةِ</مقطع>
    <مقطع هوية='٢٠٤٧٥'>وَإِذِا قَاْلَ <قول هوية='٩٤٤٤٣'>عَلَيْكَ زَيْدًا</قول> فَكَأَنَّهُ قَاْلَ لَهُ <قول هوية='٩٨٩١١'>ائْتِ زَيْدًا</قول></مقطع>
    <مقطع هوية='٥٠١١٥'>أَلَا تَرَى أَنَّ لِلْمَأْمُوْرِ اسْمَيْنِ</مقطع>
    <مقطع هوية='٥٧١٥٨'>اسْمًا لِلْمُخَاْطَبَةِ مَجْرُوْرًا</مقطع>
    <مقطع هوية='١٣٨٨٢'>وَاسْمَهُ الْفَاْعِلَ الْمُضْمَرَ فِي النِّيَّةِ</مقطع>
    <مقطع هوية='٣٢٨١١'>كَمَا كَاْنَ لَهُ اسْمٌ مُضْمَرٌ فِي النِّيَّةِ حِيْنَ قُلْتُ <حرف>عَلَيَّ</حرف></مقطع>
    <مقطع هوية='٨٤٢٣٥'>فَإِذَا قُلْتَ <حرف>عَلَيْكَ</حرف> فَلَهُ اسْمَاْنِ مَجْرُوْرٌ وَمَرْفُوْعٌ</مقطع>
    <مقطع هوية='٦٦٢٢٢'>وَلَا يَحْسُنُ أَنْ تَقُوْلَ <حرف>عَلَيْكَ وَأَخِيْكَ</حرف></مقطع>
    <مقطع هوية='٤٣٩٨١'>كَمَا لَا يَحْسُنُ أَنْ تَقُوْلَ <قول ج="*" هوية='٩٤١٧٠'>هَلُمَّ لَكَ وَأَخِيْكَ</قول></مقطع>
    <مقطع هوية='٩٣٠١٨'>وَكَذٰلِكَ <قول هوية='٠١٧٤٦'>حَذَرَكَ</قول></مقطع>
    <مقطع هوية='٠٧٠٢٦'>يُدُلُّكَ عَلَى أَنَّ <حرف>حَذَرَكَ</حرف> بِمَنْزِلَةِ
    <حرف>عَلَيْكَ</حرف></مقطع>
    <مقطع هوية='٠٧٤٦٩'>قَوْلَكُ <قول هوية='٨٥٨٠٩'>تَحْذِيْرِي زَيْدًا</قول> إِذَا أَرَدْتَ <قول هوية='٢٩٠٧٠'>حَذِّرْنِي زَيْدًا</قول></مقطع>
    <مقطع هوية='٨٠٠٨٠'>فَالْمَصْدَرُ وَغَيْرُهُ فِي هٰذَا الْبَاْبِ سَوَاْءٌ</مقطع>

    <مقطع هوية='٣٤٢٨٦'>وَمَنْ جَعَلَ <حرف>رُوَيْدًا</حرف> مَصْدَرًا قَاْلَ <قول هوية='٥٣٩٨٤'>رُوَيْدَكَ نَفْسِكَ</قول></مقطع>
    <مقطع هوية='٥٢٤٧٢'>إِذَا أَرَاْدَ أَنْ يَحْمِلَ <حرف>نَفْسَكَ</حرف> عَلَى الْكَاْفِ</مقطع>
    <مقطع هوية='٦٩٤٢١'>كَمَا قَاْلَ <قول هوية='٩٠٢٢٥'>عَلَيْكَ نَفْسِكَ</قول> حِيْنَ حَمَلَ الْكَلَاْمَ عَلَى الْكَاْفِ</مقطع>
    <مقطع هوية='٧١٥٢٣'>وَهَى مِثْلُ <حرف>حَذَرَكَ</حرف> سَوَاْءٌ إِذَا جَعَلْتَهُ مَصْدَرًا</مقطع>
    <مقطع هوية='٠٨٢٨٤'>لِأَنَّ الْـ<حرف>حَذَرَ</حرف> مَصْدَرٌ وَهُوَ مُضَاْفٌ إِلَى الْكَاْفِ</مقطع>
    <مقطع هوية='٨٨٨٧١'>فَإِنْ حَمَلْتَ <حرف>نَفْسَكِ</حرف> عَلَى الْكَاْفِ جَرَرْتَ</مقطع>
    <مقطع هوية='٤٣٨٣٠'>وَإِنْ حَمَلْتَهُ عَلَى الْمُضْمَرِ فِي النِّيَّةِ رَفَعْتَ</مقطع>

    <مقطع هوية='٢٨٣٥٦'>وَكَذٰلِكَ <حرف>رُوَيْدَكُمْ</حرف></مقطع>
    <مقطع هوية='٩١٨٦٠'>إِذَا أَرَدْتَ الْكَاْفَ تَقُوْلُ <قول هوية='٣٥٢٠١'>رُوَيْدَكُمْ أَجْمَعِيْنَ</قول></مقطع>
    <مقطع هوية='٨٩١٩٣'>وَأَمَّا قَوْلُ الْعَرَبِ <قول هوية='٢٦٧٥٥'>رُوَيْدَكَ نَفْسَكَ</قول></مقطع>
    <مقطع هوية='٧٦٨٦٥'>فَإِنَّهُمْ يَجْعَلُوْنَ الـ<حرف>نَّفْسَ</حرف> بِمَنْزِلَةِ <حرف>عَبْدِ اللهِ</حرف> إِذَا أَمَرْتَهُ بِهِ</مقطع>
    <مقطع هوية='١٩٧٣٧'>كَأَنَّكَ قُلْتَ <قول هوية='٣٧٤٥٨'>رُوَيْدَكَ عَبْدَ اللهِ</قول> إِذَا أَرَدْتَ <قول هوية='٧٤٤٩٣'>أَرْوِدْ عَبْدَ اللهِ</قول></مقطع>
    <مقطع هوية='٦٥٧٩٥'>وَأَمَّا  <حرف>حَيَّهَلَكَ</حرف> وَ<حرف>هاْءَكَ</حرف>  وَأَخَوَاْتُهَا</مقطع>
    <مقطع هوية='٧٢٨٩٥'>فَلَيْسَ فِيْهَا إِلَّا مَا ذَكَرْنَا</مقطع>
    <مقطع هوية='٢٣٧٥٩'>لِأَنَّهُنَّ لَمْ يُجْعَلْنَ مَصَاْدِرَ</مقطع>
    <مقطع هوية='٣٨١٤٤'>وَاعْلَمْ أَنَّ نَاْسًا مِنَ الْعَرَبِ يَجْعَلُوْنَ  <حرف>هَلُمَّ</حرف>  بِمَنْزِلَةِ الْأَمْثِلَةِ الَّتِي أُخِذَتْ مِنَ الْفِعْلِ</مقطع>
    <مقطع هوية='٧٢٢٩٩'>يَقُوْلُوْنَ <حرف>هَلُمَّ</حرف>
    وَ<حرف>هلُمِّي</حرف>
    وَ<حرف>هَلُمَّا</حرف>
    وَ<حرف>هَلُمُّوْا</حرف></مقطع>

    <مقطع هوية='٧٤٢٤٩'>وَاعْلَمْ أَنَّكَ لَا تَقُوْلُ <حرف>دُوْنِي</حرف></مقطع>
    <مقطع هوية='٥٩٥٤٦'>كَمَا قُلْتَ <حرف>عَلَيَّ</حرف></مقطع>
    <مقطع هوية='٩٩٩٨٧'>لِأَنَّهُ لَيْسَ كُلُّ فِعْلٍ يَجِيْءُ بِمَنْزِلَةِ <حرف>أَوِّلْنِي</حرف>
    قَدْ تَعَدَّى إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع هوية='٩٦٤٢٣'>فَإِنَّمَا <حرف>عَلَيَّ</حرف> بِمَنْزِلَةِ <حرف>أَوِّلْنِي</حرف></مقطع>
    <مقطع هوية='٧٥٦٥٤'>وَ<حرف>دُوْنَكَ</حرف> بِمَنْزِلَةِ <حرف>خُذْ</حرف></مقطع>
    <مقطع هوية='٣٣٢٢٩'>لَا تَقُوْلُ <قول ج="*" هوية='١١١٦٧'>آخِذْنِي دِرْهَمًا</قول></مقطع>
    <مقطع هوية='٨٩٦٠٨'>وَلَا <قول ج="*" هوية='١٢٥٨١'>خُذْنِي دِرْهَمًا</قول></مقطع>
    <مقطع هوية='٣٨٥٥٧'>وَاعْلَمْ أَنَّهُ لَا يَجُوْزُ لَكَ أَنْ تَقُوْلَ <قول هوية='٨١٠٧٦'>عَلَيْهِ زَيْدًا</قول> تُرِيْدُ بِهِ الْأَمْرَ</مقطع>
    <مقطع هوية='٤٦٤٤١'>كَمَا أَرَدْتَ ذٰلِكَ فِي الْفِعْلِ حِيْنَ قُلْتُ <قول هوية='٢٢٣٩٩'>لِيَضْرِبْ زَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٣٩٩٧٨'>لِأَنَّ <حرف>عَلَيْهِ</حرف> لَيْسَ مِنَ الْفِعْلِ</مقطع>
    <مقطع هوية='٧١٦٥٢'>وَكَذٰلِكَ <حرف>حَذَرَهُ زَيْدًا</حرف> قَبِيْحَةٌ</مقطع>
    <مقطع هوية='٢٢٧٠٣'>لِأَنَّهَا لَيْسَتْ مِنْ أَمْثِلَةِ الْفِعْلِ</مقطع>
    <مقطع هوية='٠٣١١١'>فَإِنَّمَا جَاْءَ <حرف>تَحْذِيْرِي زَيْدًا</حرف></مقطع>
    <مقطع هوية='٨٣٤٢١'>لِأَنَّ الْمَصْدَرَ يَتَصَرَّفُ مَعَ الْفِعْلِ</مقطع>
    <مقطع هوية='٧٥٥٩٧'>فَيَصِيْرُ <حرف>حَذَرَكَ</حرف>
    فِي مَوْضِعِ <حرف>احْذَرْ</حرف></مقطع>
    <مقطع هوية='٩٥٨٧٤'>وَ<حرف>تَحْذِيْرِي</حرف>
    فِي مَوْضِعِ <حرف>حَذِّرْنِي</حرف></مقطع>
    <مقطع هوية='٤٣٣٢٧'>فَالْمَصْدَرُ أَبْدًا فِي مَوْضِعِ فِعْلِهِ</مقطع>
    <مقطع هوية='٦٨٩٤٤'>وَ<حرف>دُوْنَكَ</حرف>
    لَمْ يُؤْخَذْ مِنَ فِعْلٍ وَلَا <حرف>عِنْدَكَ</حرف></مقطع>
    <مقطع هوية='٧٨٧٧٥'>فَإِنَّمَّا تَنْتَهِي فِيْهَا حَيْثُ انْتَهَتِ الْعَرَبُ</مقطع>

    <مقطع هوية='٢٢١٧٤'>وَاعْلَمْ أَنَّهُ يَقْبُحُ <قول ج="*" هوية='٨١٨٢٤'>زَيْدًا عَلَيْكَ</قول> وَ<قول ج="*" هوية='٩٩٩٣٤'>زَيْدًا حَذَرَكَ</قول></مقطع>
    <مقطع هوية='٢٠٢٤٣'>لِأَنَّهُ لَيْسَ مِنْ أَمْثِلَةِ الْفِعْلِ</مقطع>
    <مقطع هوية='٧٥٤٥٧'>فَقَبُحَ أَنْ يَجْرِيَ مَا لَيْسَ مِنَ الْأَمْثِلَةِ مَجْرَاْهَا</مقطع>
    <مقطع هوية='٠٤٠٦٤'>إِلَّا أَنَّ تَقُوْلَ <حرف>زَيْدًا</حرف> فَتَنْصِبَ بِإِضْمَاْرِكَ الْفِعْلَ</مقطع>
    <مقطع هوية='٧١١٨٤'>ثُمَّ تَذْكُرُ <حرف>عَلَيْكَ</حرف> بَعْدَ ذٰلِكَ</مقطع>
    <مقطع هوية='٩٥٢٢٨'>فَلَيْسَ يَقْوَى هٰذَا قُوَّةَ الْفِعْلِ</مقطع>
    <مقطع هوية='٨٨٨١٠'>لِأَنَّهُ لَيْسَ بِفِعْلٍ</مقطع>
    <مقطع هوية='٥٨٦٤٩'>وَلَا يَتَصَرَّفُ تَصَرُّفَ الْفَاْعِلِ الَّذِي فِي مَعْنَى <حرف>يَفْعَلُ</حرف></مقطع>

