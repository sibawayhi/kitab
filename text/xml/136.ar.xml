<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٧٩"
     درنبورج="١-٢٤١"
     هارون="٢-١٣١"
     يعقوب="٢-١٣٠"
     البكاء="٣-١١"
     رقم="١٣٦">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ الْحُرُوْفِ الْخَمْسَةِ الَّتِي تَعْمَلُ فِيْمَا بَعْدَهَا كَعَمَلِ الْفِعْلِ فِيْمَا بَعْدَهُ</مقطع>
   </عنوان>
    <!-- <فقرة> -->
       <مقطع رقم="٢">وَهِيَ مِنْ الْفِعْلِ بِمَنْزِلَةِ  <حرف>عِشْرِيْنَ</حرف>  مِنْ الْأَسْمَاْءِ الَّتِي بِمَنْزِلَةِ الْفِعْلِ</مقطع>
       <مقطع رقم="٣">لَا تَصَرَّفُ تَصَرُّفَ الْأَفْعَالِ</مقطع>
       <مقطع رقم="٤">كَمَا انَّ  <حرف>عِشْرِيْنَ</حرف>  لَا تَصَرَّفُ تَصَرُّفَ الْأَسْمَاْءِ الَّتِي أُخِذْتَ مِنْ الْفِعْلِ وَكَانَتْ بِمَنْزِلَتِهِ</مقطع>
       <مقطع رقم="٥">وَلَكِنْ يُقَالُ بِمَنْزِلَةِ الْأَسْمَاْءِ الَّتِي أُخِذَتْ مِنْ الْأَفْعَالِ</مقطع>
       <مقطع رقم="٦">وَشُبِّهَتْ بِهَا فِي هٰذَا الْمَوْضِعِ</مقطع>
       <مقطع رقم="٧">فَنَصَبَتْ <حرف>دِرْهَمًا</حرف> لِأَنَّهُ لَيْسَ مِنْ نَعْتِهًا</مقطع>
       <مقطع رقم="٨">وَلَا هِيَ مُضَافَةٌ إِلَيْهِ</مقطع>
       <مقطع رقم="٩">وَلَمْ تُرِدْ أَنْ تَحْمَلَ الـ<حرف>دِّرْهَمَ</حرف>  عَلَى مَا حُمِلَ الْـ<حرف>عِشْرُوْنَ</حرف> عَلَيْهِ</مقطع>
       <مقطع رقم="١٠">وَلَكِنَّهُ وَاْحِدٌ بُيِّنَ بِهِ الْعَدَدُ</مقطع>
       <مقطع رقم="١١">فَعَمِلَتْ فِيْهِ كَعَمَلِ الـ<حرف>ضَّاْرِبِ</حرف>  فِي  <حرف>زَيْدٍ</حرف>  إِذَا قُلْتَ <قول>هٰذَا ضَاْرِبٌ زَيْدًا</قول>
      </مقطع>
       <مقطع رقم="١٢">لِأَنَّ  <حرف>زَيْدًا</حرف>  لَيْسَ مِنْ صِفَةِ الـ<حرف>ضَّاْرِبِ</حرف>
      </مقطع>
       <مقطع رقم="١٣">وَلَا مَحْمُولًا عَلَى مَا حُمِلَ عَلَيْهِ الـ<حرف>ضَّاْرِبُ</حرف>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="١٤">وَكَذٰلِكَ هَذِهِ الْحُرُوْفُ مَنْزِلَتُهَا مِنْ الْأَفْعَالِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="١٥">وَهِيَ  <حرف>إِنَّ</حرف>  وَ<حرف>لَكِنَّ</حرف>  وَ<حرف>لَيْتَ</حرف>  وَ<حرف>لَعَلَّ</حرف>  وَ<حرف>كَأَنَّ</حرف>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="١٦">وَذٰلِكَ قَوْلُكَ <قول>إِنَّ زَيْدًا مُنْطَلِقٌ</قول> وَ<قول>إِنَّ عَمْرًا مُسَافِرٌ</قول> وَ<قول>إِنَّ زَيْدًا أَخُوْكَ</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="١٧">وَكَذٰلِكَ أَخَوَاْتُهًا</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="١٨">وَزَعَمَ الْخَلِيْلُ أَنَّهَا عَمِلَتْ عَمَلَيْنِ الْرَّفْعُ وَالْنَّصْبُ</مقطع>
       <مقطع رقم="١٩">كَمَا عَمِلَتْ  <حرف>كَانَ</حرف>  الرَّفْعَ وَالنَّصْبَ حِيْنَ قُلْتُ <قول>كَانَ أَخُوكَ زَيْدًا</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٢٠">إِلَا أَنَّهُ لَيْسَ لَكَ أَنْ تَقُوْلَ <قول>كَأَنَّ أَخُوْكَ عَبْدُ اللّٰهِ</قول>
      </مقطع>
       <مقطع رقم="٢١">تُرِيْدُ <قول>كَأَنَّ عَبْدَ اللّٰهِ أَخُوْكَ</قول>
      </مقطع>
       <مقطع رقم="٢٢">لِأَنَّهَا لَا تَصَرَّفُ تَصَرُّفَ الْأَفْعَالِ</مقطع>
       <مقطع رقم="٢٣">وَلَا يُضْمَرُ فِيْهَا الْمَرْفُوْعُ كَمَا يُضْمَرُ فِي  <حرف>كَانَ</حرف>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٢٤">فَمِنْ ثَمَّ فَرَقُوْا بَيْنَهُمَا كَمَا فَرَقُوْا بَيْنَ  <حرف>لَيْسَ</حرف>  وَ<حرف>مًا</حرف>
      </مقطع>
       <مقطع رقم="٢٥">فَلَمْ يُجْرُوهَا مَجْرَاهَا وَلَكِنْ قِيْلَ هِيَ بِمَنْزِلَةِ الْأَفْعَالِ فِيْمَا بَعْدَهَا وَلَيْسَتْ بِأَفْعَالٍ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٢٦">وَتَقُوْلُ <قول>إِنَّ زَيْدًا الظَّرِيْفَ مَنْطَلِقٌ</قول>
      </مقطع>
       <مقطع رقم="٢٧">فَإِنْ لَمْ يُذْكَرْ الْـ<حرف>مُنْطَلِقُ</حرف> صَاْرَ <حرف>الْظَّرِيْفُ</حرف> <هارون مجلد="٢" صفحة="١٣١"/>فَِيْ مَوْضِعِ الْخَبَرِ</مقطع>
       <مقطع رقم="٢٨">كَمَا قُلْتَ <قول>كَانَ زَيْدٌ الظَّرِيْفُ ذَاهِبًا</قول>
      </مقطع>
       <مقطع رقم="٢٩">فَلَمَّا لَمْ تَجِئْ بِالـ<حرف>ذَّاهِبِ</حرف> قُلْتَ <قول>كَانَ زَيْدٌ الظَّرِيْفَ</قول>
      </مقطع>
       <مقطع رقم="٣٠">فَنَصْبُ هٰذَا فِي  <حرف>كَانَ</حرف>  بِمَنْزِلَةِ رَفْعِ الْأَوَّلِ فِي  <حرف>إِنَّ</حرف> وَأَخَوَاْتُهًا</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٣١">وَتَقُوْلُ <قول>إِنَّ فِيْهَا زَيْدًا قَاْئِمًا</قول>
      </مقطع>
       <مقطع رقم="٣٢">وَإِنْ شِئْتَ رَفَعْتَ عَلَى إِلْغَاْءٍ فِيْهًا</مقطع>
       <مقطع رقم="٣٣">وَإِنْ شِئْتِ قُلْتَ <قول>إِنَّ زَيْدًا فِيْهَا قَاْئِمًا</قول> وَ<قول>قَاْئِمٌ</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٣٤">وَتَفْسِيْرُ نَصْبِ الْـ<حرف>قَاْئِمِ</حرف> هٰهُنَا وَرَفْعِهِ كَتَفْسِيْرِهِ فِي الِابْتِدَاْءِ</مقطع>
       <مقطع رقم="٣٥">وَ<حرف>عَبْدُ اللّٰهِ</حرف> يَنْتَصِبُ بِـ<حرف>إِنَّ</حرف>  كَمَا ارْتَفَعَ ثَمَّ بِالِابْتِدَاْءِ</مقطع>
       <مقطع رقم="٣٦">إِلَا أَنَّ <حرف>فَِيْهًا</حرف> هٰهُنَا بِمَنْزِلَةِ هٰذَا فِي أَنَّهُ يُسْتَغْنَى عَلَى مَا بَعْدَهَا الْسُّكُوْتُ وَتَقَعُ مَوْقِعَهُ</مقطع>
       <مقطع رقم="٣٧">وَلَيْسَتْ <حرف>فَِيْهًا</حرف> بِنَفْسِ عَبْدِ اللهِ</مقطع>
       <مقطع رقم="٣٨">كَمَا كَانَ هٰذَا نَفْسُ عَبْدِ اللّٰهِ</مقطع>
       <مقطع رقم="٣٩">وَإِنَّمَا هِيَ ظَرْفٌ لَا تَعْمَلُ فِيْهَا <حرف>إِنَّ</حرف>  بِمَنْزِلَةِ  <حرف>خَلْفَكَ</حرف>
      </مقطع>
       <مقطع رقم="٤٠">وَإِنَّمَا انْتَصَبَ  <حرف>خَلْفَكَ</حرف>  بِالَّذِي فِيْهِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٤١">وَقَدْ يَقَعُ الشَّيْءُ مَوْقِعَ الشَّيْءِ وَلَيْسَ إِعْرَاْبُهُ كَإِعْرَاْبِهِ</مقطع>
       <مقطع رقم="٤٢">وَذٰلِكَ قَوْلُكَ <قول>مَرَرْتُ بِرَجُلٍ يَقُوْلُ ذَاكَ</قول>
      </مقطع>
       <مقطع رقم="٤٣">فَـ<حرف>يَقُوْلُ</حرف>  فِي مَوْضِعِ  <حرف>قَاْئِلٍ</حرف>  وَلَيْسَ إِعْرَاْبُهُ كَإِعْرَاْبِهِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٤٤">وَتَقُوْلُ <قول>إِنَّ بِكَ زَيْدًا مَأْخُوْذٌ</قول>
      </مقطع>
       <مقطع رقم="٤٥">وَ<قول>إِنَّ لَكَ زَيْدًا وَاقِفٌ</قول>
      </مقطع>
       <مقطع رقم="٤٦">مِنْ قِبَلِ أَنَّكَ إِذَا أَرَدْتَ الْوُقُوْفَ وَالْأَخْذَ لَمْ يَكُنْ  <حرف>بِكَ</حرف>  وَلَا  <حرف>لَكَ</حرف>  مُسْتَقَرَّيْنِ لِـ<حرف>عَبْدِ اللّٰهِ</حرف>  وَلَا مَوْضِعَيْنِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٤٧">أَلَا تَرَى أَنَّ السُّكُوْتَ لَا يُسْتَغْنَى عَلَى  <حرف>عَبْدِ اللّٰهِ</حرف>
      </مقطع>
       <مقطع رقم="٤٨">إِذَا قُلْتَ <قول>لَكَ زَيْدٌ</قول> وَأَنْتَ تُرِيْدُ الْوُقُوْفَ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٤٩">وَمِثْلُ ذٰلِكَ <قول>إِنَّ فِيْكَ زَيْدًا لَرَاْغِبٌ</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٥٠">قَالَ الشَّاْعِرُ</مقطع>
       <هارون مجلد="٢" صفحة="١٣٢"/>
       <شاهدة رقم="١" xml:id="١٣٦-١">
          <بيت>
             <مصراع>فَلَا تُلْحيّ فِيْهَا فَإِنَّ بِحُبِّهًا</مصراع>
             <مصراع>أَخَاكَ مُصَاْبُ الْقَلْبِ جَمٌّ بَلْاْبِلُهْ</مصراع>
         </بيت>
      </شاهدة>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٥١">كَأَنَّكَ أَرَدْتَ <قول>إِنَّ زَيْدًا رَاْغِبٌ</قول> وَ<قول>إِنَّ زَيْدًا مَأْخُوْذٌ</قول>
      </مقطع>
       <مقطع رقم="٥٢">وَلَمْ تَذْكُرْ  <حرف>فَِيْكَ</حرف>  وَلَا  <حرف>بِكَ</حرف>
      </مقطع>
       <مقطع رقم="٥٣">فَأُلغِيْتا هٰهُنَا كَمَا أُلغِيْتا فِي الِابْتِدَاْءِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٥٤">وَلَوْ نَصَبْتَ هٰذَا لَقُلْتُ <قول>إِنَّ الْيَوْمَ زَيْدًا مُنْطَلِقًا</قول>
      </مقطع>
       <مقطع رقم="٥٥">وَلَكِنْ تَقُوْلُ <قول>إِنَّ الْيَوْمَ زَيْدًا مُنْطَلِقٌ</قول>
      </مقطع>
       <مقطع رقم="٥٦">وَتُلْغِي  <حرف>الْيَوْمَ</حرف>  كَمَا أَلْغَيْتَهَ فِي الِابْتِدَاْءِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٥٧">وَتَقُوْلُ <قول>إِنَّ الْيَوْمَ فِيْهِ زَيْدٌ ذَاهِبٌ</قول>
      </مقطع>
       <مقطع رقم="٥٨">مِنْ قِبَلِ أَنْ إِنْ عَمِلْتَ فِي الْيَوْمِ فَصَاْرَ كَقَوْلِكَ <قول>إِنَّ عُمْرًا فِيْهِ زَيْدٌ مُتَكَلِّمٌ</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٥٩">وَيَدُلُّكَ عَلَى أَنَّ  <حرف>الْيَوْمَ</حرف>  قَدْ عَمِلَتْ فِيْهِ إِنَّ أَنَّكَ تَقُوْلُ <قول>الْيَوْمَ فِيْهِ زَيْدٌ ذَاهِبٌ</قول>
      </مقطع>
       <مقطع رقم="٦٠">فَتَرْفَعُ بِالْإِبْتِدَاْءِ فَكَذٰلِكَ تَنْصُبُ بِـ<حرف>أَنَّ</حرف>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٦١">وَتَقُوْلُ <قول>إِنَّ زَيْدًا لَفِيْهَا قَاْئِمًا</قول>
      </مقطع>
       <مقطع رقم="٦٢">وَإِنْ شِئْتَ أَلْغَيْتَ  <حرف>لَفِيْهًا</حرف>  كَأَنَّكَ قُلْتَ <قول>إِنَّ زَيْدًا لَقَاْئِمٌ فِيْهًا</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٦٣">وَيَدُّلُكَ عَلَى أَنَّ  <حرف>لَفِيْهًا</حرف>  يُلْغَى أَنَّكَ تَقُوْلُ <قول>إِنَّ زَيْدًا لَبِكَ مَأْخُوْذٌ</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٦٤">قَالَ الشَّاْعِرُ وَهُوَ أَبُوْ زُبَيْدٍ الْطَّاْئِيِّ</مقطع>
       <شاهدة رقم="٢" xml:id="١٣٦-٢">
          <بيت>
             <مصراع>إِنَّ امْرَأَ خُصُنِيّ عَمَّدا مَوَدَّتَهُ</مصراع>
             <مصراع>عَلَىالْتَّنَاْئِى لعِنَّدَىْ غَيْرُ مَكْفُوْرِ</مصراع>
         </بيت>
      </شاهدة>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٦٥">فَلَمَّا دَخَلَتْ اللَّامُ فِيْمَا لَا يَكُوْنُ إِلَّا لَغْوًا</مقطع>
       <مقطع رقم="٦٦">عَرَفْنَا أَنَّهُ يَجُوْزُ فِي  <حرف>فَِيْهًا</حرف>  وَيَكُوْنُ لَغْوًا لِأَنَّ  <حرف>فَِيْهًا</حرف>  قَدْ تَكُوْنُ لَغْوًا</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٦٧">وَإِذَا قُلْتَ <قول>إِنَّ زَيْدًا فِيْهَا لَقَاْئِمٌ</قول>
      </مقطع>
       <مقطع رقم="٦٨">فَلَيْسَ إِلَّا الْرَّفْعُ لِأَنَّ الْكَلَامَ مَحْمُوْلٌ عَلَى  <حرف>إِنَّ</حرف>
      </مقطع>
       <مقطع رقم="٦٩">وَاللَّامُ تَدُلُّ عَلَى ذٰلِكَ</مقطع>
       <مقطع رقم="٧٠">وَلَوْ جَاْزَ النَّصْبُ هٰهُنَا لَجَاْزَ فِيْهَا <قول>زَيْدٌ لْقَاْئِمًا</قول> فِي الِابْتِدَاْءِ</مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٧١">وَمِثْلُهَا <قول>إِنَّ فِيْهَا زَيْدًا لَقَاْئِمٌ</قول>
      </مقطع>
   <!-- </فقرة> -->
   <!--  <فقرة> -->
       <مقطع رقم="٧٢">وَرَوَى الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّ نَاْسًا يَقُوْلُوْنَ <قول>إِنَّ بِكَ زَيْدٌ مَأْخُوْذٌ</قول>
      </مقطع>
       <مقطع رقم="٧٣">فَقَالَ هٰذَا عَلَى قَوْلِهِ <قول>إِنَّهُ بِكَ زَيْدٌ مَأْخُوْذٌ</قول>
      </مقطع>
       <مقطع رقم="٧٤">وَشَبَّهَهُ بِمَا يَجُوْزُ فِي الشِّعْرِ نَحْوَ قَوْلِهِ وَهُوَ ابْنُ صُرَيْمٍ الْيَشْكُرِىُّ</مقطع>
   <!-- </فقرة> -->
    <شاهدة رقم="٣" xml:id="١٣٦-٣">
       <بيت>
          <مصراع>وَيَوْمَا تُوَّافِيْنا بِوَجّهُ</مصراع>
          <مصراع>كَأَّنْ ظَبِيّةً تَعْطُوْ إِلَى وَاْرِقِ الْسَّلَمْ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="١٣٤"/>

    <فقرة>
       <مقطع رقم="٧٥">وَقَالَ الْآخَرُ</مقطع>
       <شاهدة رقم="٤" xml:id="١٣٦-٤">
          <بيت>
             <مصراع>وَوَجْهٌ مُشْرِقُ الْنَّحْرِ</مصراع>
             <مصراع>كَأَنْ ثَدْيَاهُ حُقَّانِ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٧٦">لِأَنَّهُ لَا يَحْسُنُ هٰهُنَا إِلَّا الْإِضْمَاْرُ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٧٧">وَزَعَمَ الْخَلِيْلُ أَنَّ هٰذَا يُشْبِهُ قَوْلَ مَنْ قَالَ وَهُوَ الْفَرَزْدَقُ</مقطع>
       <هارون مجلد="٢" صفحة="١٣٥"/>
       <شاهدة رقم="٥" xml:id="١٣٦-٥">
          <بيت>
             <مصراع>فَلَوْ كُنْتَ ضَبيّا عَرَفْتَ قَرَاْبَتِيّ</مصراع>
             <مصراع>وَلَكِنَّ زَنَجَىْ عَظِيِمُ الْمَشَافِرِ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٧٨">وَالنَّصْبُ أَكْثَرُ فِي كَلَامِ الْعَرَبِ</مقطع>
       <مقطع رقم="٧٩">كَأَنَّهُ قَالَ <قول>وَلَكِنْ زِنْجِيًّا عَظِيْمَ الْمَشَافِرِ لَا يَعْرِفُ قَرَاْبَتِيْ</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٨٠">وَلَكِنَّهُ أَضْمَرَ هٰذَا كَمَا يُضْمِرُ مَا بَنَى عَلَى الِابْتِدَاْءِ</مقطع>
       <مقطع رقم="٨١">نَحْوُ قَوْلِهِ عَزَّ وَجَلَّ  <آية>طَاْعَةٌ وَقَوْلٌ مَّعْرُوْفٌ</آية>  أَيْ <قول>طَاْعَةٌ وَقَوْلٌ مَّعْرُوْفٌ أُمَثِّلُ</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٨٢">وَقَالَ الشَّاْعِرُ</مقطع>
       <شاهدة رقم="٦" xml:id="١٣٦-٦">
          <بيت>
             <مصراع>فَمَا كُنْتُ ضَفَّاْطا وَلَكِنَّ طَالِبُا</مصراع>
             <مصراع>أَنَاْخَ قَلِيْلا فَوْقَ ظَهْرِ سَبِيِلِ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٨٣">أَيْ وَلَكِنَّ طَالِبا مُنِيْخِا أَنًا</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٨٤">فَالنَّصْبُ أَجْوَدُ لِأَنَّهُ لَوْ أَرَاْدَ إِضْمَاْرًا لَخَفَّفَ وَلَجَعَلَ الْمُضْمَرَ مُبْتَدَأً</مقطع>
       <مقطع رقم="٨٥">كَقَوْلِكَ <قول>مَا أَنْتَ صَالِحًا وَلَكِنْ طَالِحٌ</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٨٦">وَرَفَعَهُ عَلَى قَوْلِهِ <قول>وَلَكِنَّ زَنَجَىْ</قول>
      </مقطع>
   </فقرة>
    <هارون مجلد="٢" صفحة="١٣٦"/>
    <فقرة>
       <مقطع رقم="٨٧">وَأَمَّا قَوْلُ الْأَعْشَى</مقطع>
       <شاهدة رقم="٧" xml:id="١٣٦-٧">
          <بيت>
             <مصراع>فَِي فِتْيَةٍ كَسُيُوفِ الْهِنْدِ قَدْ عَلِمُوْا</مصراع>
             <مصراع>أَنْ هَالِكٌ كُلُّ مَنْ يَحْفَى وَيَنْتَعّلَ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٨٨">فَإِنَّ هٰذَا عَلَى إِضْمَاْرِ الْهَاْءِ لَمْ يَحْذَفُوا</مقطع>
       <مقطع رقم="٨٩">لِأَنْ يَكُوْنَ الْحَذْفُ يَدْخُلُسهُ فِي حُرُوْفِ الِابْتِدَاْءِ بِمَنْزِلَةِ  <حرف>إِنَّ</حرف>  وَ<حرف>لَكِنَّ</حرف>
      </مقطع>
       <مقطع رقم="٩٠">وَلَكِنَّهُمْ حَذَفُوا كَمَا حَذَفُوا الْإِضْمَاْرَ</مقطع>
       <مقطع رقم="٩١">وَجَعَلُوا الْحَذْفَ عَلَمًا لِحَذْفِ الْإِضْمَاْرِ فِي  <حرف>إِنَّ</حرف>  كَمَا فَعَلُوْا ذٰلِكَ فِي  <حرف>كَأَنَّ</حرف>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٩٢">وَأَمَّا <قول>لَيْتَمَا زَيْدًا مُنْطَلِقٌ</قول>
      </مقطع>
       <مقطع رقم="٩٣">فَإِنَّ الْإِلْغَاْءَ فِيْهِ حَسَنٌ</مقطع>
       <مقطع رقم="٩٤">وَقَدْ كَانَ رُؤْبَةُ ابْنِ الْعَجَّاْجُ يُنْشِدُ هٰذَا الْبَيْتَ رَفْعًا</مقطع>
       <مقطع رقم="٩٥">وَهُوَ قَوْلُ الْنَّاْبِغَةِ الْذُّبْيَانِيُّ</مقطع>
   </فقرة>
    <شاهدة رقم="٨" xml:id="١٣٦-٨">
       <بيت>
          <مصراع>قَالَتْ أَلَا لَيْتَمَا هٰذَا الْحَمَّامُ لَنًا</مصراع>
          <مصراع>إِلَى حَمَامْتِنا وَنِصْفَهُ فَقَدِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="١٣٧"/>
    <فقرة>
       <مقطع رقم="٩٦">فَرَفَعَهُ عَلَى وَجْهَيْنِ</مقطع>
       <مقطع رقم="٩٧">عَلَى أَنَّ يَكُوْنَ بِمَنْزِلَةِ قَوْلِ مَنْ قَالَ  <آية>مَثَلا مَّا بَعُوْضَةً</آية>
      </مقطع>
       <مقطع رقم="٩٨">أَوْ يَكُوْنَ بِمَنْزِلَةِ قَوْلِهِ <قول>إِنَّمَا زَيْدٌ مُنْطَلِقٌ</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٩٩">وَأَمَّا  <حرف>لَعَلَّمًا</حرف>  فَهُوَ بِمَنْزِلَةِ  <حرف>كَأَنَّمًا</حرف>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٠٠">وَقَالَ الشَّاْعِرُ وَهُوَ ابْنُ كُرَاْعَ</مقطع>
   </فقرة>
    <شاهدة رقم="٩" xml:id="١٣٦-٩">
       <بيت>
          <مصراع>تَحَلَّلْ وَعَالِجْ ذَاْتَ نَفِسِكَ وَانْظُرَنْ</مصراع>
          <مصراع>أَيّا جُعَلٍ لَعَلَّمَا أَنْتَ حَالِمُ</مصراع>
      </بيت>
   </شاهدة>
    <فقرة>
       <مقطع رقم="١٠١">وَقَالَ الْخَلِيْلُ إِنَّمَا لَا تَعْمَلُ فِيْمَا بَعْدَهًا</مقطع>
       <مقطع رقم="١٠٢">كَمَا أَنَّ  <حرف>أَرَى</حرف>  إِذَا كَانَتْ لَغْوًا لَمْ تَعْمَلْ فَجَعَلُوْا هٰذَا نَظِيْرَهَا مِنْ الْفِعْلِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٠٣">كَمَا كَانَ نَظِيْرَ  <حرف>إِنَّ</حرف>  مَنْ الْفِعْلِ مَا يَعْمَلُ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٠٤">وَنَظِيْرُ  <حرف>إِنَّمًا</حرف>  قَوْلُ الشَّاْعِرُ وَهُوَ الْمَرَّاْرُ الْفَقْعَسِىُّ</مقطع>
   </فقرة>
    <هارون مجلد="٢" صفحة="١٣٨"/>
    <شاهدة رقم="١٠" xml:id="١٣٦-١٠">
       <بيت>
          <مصراع>أَعَلَاقَةً أُمَّ الْوُلَيِّدِ بَعْدَمًا</مصراع>
          <مصراع>أَفْنَانُ رَأْسِكَ كَالْثَّغَامِ الْمُخْلِسِ</مصراع>
      </بيت>
   </شاهدة>
    <فقرة>
       <مقطع رقم="١٠٥">جَعَلَ  <حرف>بَعْدَ</حرف>  مَعَ  <حرف>مًا</حرف>  بِمَنْزِلَةِ حَرْفٌ وَاْحِدٌ وَاْبْتَدَأَ مَا بَعْدَهُ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٠٦">وَاْعْلَمْ أَنَّهُمْ يَقُوْلُوْنَ <قول>إِنْ زَيْدٌ لَذَاهِبٌ</قول> وَ<قول>إِنْ عَمْرِوٌ لَخَيْرٌ مِنْكَ</قول>
      </مقطع>
       <مقطع رقم="١٠٧">لَمَّا خَفَّفَهَا جَعَلَهَا بِمَنْزِلَةِ  <حرف>لَكِنْ</حرف>  حِيْنَ خَفَّفَهًا</مقطع>
       <مقطع رقم="١٠٨">وَأَلْزَمَهَا اللَّامَ لِئَلَّا تَلْتَبِسُ بِـ<حرف>إِنْ</حرف>  الَّتِي [ هِيَ ] بِمَنْزِلَةِ  <حرف>مًا</حرف>  الَّتِي تُنْفَى بِهًا</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٠٩">وَمِثْلُ ذٰلِكَ  <آية>إِنْ كُلُّ نَفْسٍ لَمَا عَلَيْهَا حَافِظٌ</آية>  إِنَّمَا هِيَ <قول>لَعَلَيْهَا [ حَافِظٌ ]</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١١٠">وَقَالَ تَعَالَى <آية سورة="ط" رقم="٤">وَإِنْ كُلٌّ لَمَا جَمِيْعٌ لَدَيْنَا مُحْضَرُوْنَ</آية>  إِنَّمَا هِيَ  <حرف>لِجَمِيْعٌ</حرف>  وَ<حرف>مًا</حرف> لَغْوَ</مقطع>
   </فقرة>
    <هارون مجلد="٢" صفحة="١٣٩"/>
    <فقرة>
       <مقطع رقم="١١١">وَقَالَ تَعَالَىْ  <آية>وَإِنْ وَجَدْنَا أَكْثَرَهُمْ لَفَاْسِقِيْنَ</آية>
           <آية>وَإِنْ نَّظُنُّكَ لَمِنَ الْكَاْذِبِيْنَ</آية>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١١٢">وَحَدَّثَنَا مَنْ نَثِقُ بِهِ أَنَّهُ سَمِعَ مِنْ الْعَرَبِ مَنْ يَقُوْلُ <قول>إِنْ عَمْرًا لَمُنْطَلِقٌ</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١١٣">وَأَهْلُ الْمَدِيْنَةِ يَقْرَءُوْنَ  <آية>وَإِنْ كُلّا لَمَا لَيُوَفِّيَنَّهُمْ رَبُّكَ أَعْمَالَهُمْ</آية>  يُخَفِّفُونَ وَيَنْصِبُوْنَ</مقطع>
       <مقطع رقم="١١٤">كَمَا قَالُوْا</مقطع>
   </فقرة>
    <شاهدة رقم="١١" xml:id="١٣٦-١١">
       <بيت>
          <مصراع>كَأَنْ ثَدْيَيْهُ حُقّانِ</مصراع>
      </بيت>
   </شاهدة>
    <فقرة>
       <مقطع رقم="١١٥">وَذٰلِكَ لِأَنَّ الْحَرْفَ بِمَنْزِلَةِ الْفِعْلِ</مقطع>
       <مقطع رقم="١١٦">فَلَمَّا حُذِفَ مِن نَّفْسِهِ شَيْءٌ لَمْ يُغَيَّرْ عَمَلُهُ</مقطع>
       <مقطع رقم="١١٧">كَمَا لَمْ يُغَيَّرْ عَمَلُ  <حرف>لَمْ يَكُ</حرف>  وَ<حرف>لَمْ أُبَلْ</حرف>  حِيْنَ حُذِفَ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١١٨">وَأَمَّا أَكْثَرُهُمْ فَأَدْخُلُوهَا فِي حُرُوْفِ الِابْتِدَاْءِ حِيْنَ حَذَفُوا</مقطع>
       <مقطع رقم="١١٩">كَمَا أَدْخَلُوهَا فِي حُرُوْفِ الِابْتِدَاْءِ حِيْنَ ضَمُّوا إِلَيْهَا  <حرف>مًا</حرف>
