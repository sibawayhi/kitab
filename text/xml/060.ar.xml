     رقم="٦٠">

    <عنوان>
       <مقطع هوية='٩٩٩٧١'>هٰذَا بَاْبٌ مِنْهُ يُضْمِرُوْنَ فِيْهِ الْفِعْلَ</مقطع>
       <مقطع هوية='١١٣١١'>لِقُبْحِ الْكَلَاْمِ إِذَا حُمِلَ آخِرُهُ عَلَى أَوَّلِهِ</مقطع>
   </عنوان>
    <مقطع هوية='٠٤٠٥٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='١٠٩٧٧'>مَا لَكَ وَزَيْدًا</قول></مقطع>
    <مقطع هوية='٨٤٦٢٤'>وَ<قول هوية='٨٧٢١٥'>مَا شَأْنُكَ وَعَمْرًا</قول></مقطع>
    <مقطع هوية='١٢٨٠٨'>فَإِنَّمَا حَدُّ الْكَلَاْمِ هٰهُنَا <قول هوية='٧٣٥٦٣'>مَا شَأْنُكَ وَشَأْنُ عَمْرٍو</قول></مقطع>
    <مقطع هوية='٣٤٥٢٧'>فَإِنْ حَمَلْتَ الْكَلَاْمَ عَلَى الْكَاْفِ الْمُضْمَرِ فَهُوَ قَبِيْحٌ</مقطع>
    <مقطع هوية='٩١٤٧٢'>وَإِنْ حَمَلْتَهُ عَلَى الـ<حرف>شَّأْنِ</حرف> لَمْ يَجُزْ</مقطع>
    <مقطع هوية='٨٤٠٣١'>لِأَنَّ الـ<حرف>شَّأْنَ</حرف> لَيْسَ يَلْتَبِسُ بِـ<حرف>عَبْدِ اللهِ</حرف></مقطع>
    <مقطع هوية='٨٥١٧٤'>إِنَّمَا يَلْتَبِسُ بِهِ الرَّجُلُ الْمُضْمَرُ فِي الـ<حرف>شَّأْنِ</حرف></مقطع>
    <مقطع هوية='٨٩٢٥٨'>فَلَمَّا كَاْنَ ذٰلِكَ قَبِيْحًا حَمَلُوْهُ عَلَى الْفِعْلِ</مقطع>
    <مقطع هوية='٧٦٩٨٩'>فَقَاْلُوْا <قول هوية='٠١٩٥٣'>مَا شَأْنُكَ وَزَيْدًا</قول></مقطع>
    <مقطع هوية='٦٣٢٠٠'>أَيْ <قول هوية='٢٢٩٢٣'>مَا شَأْنُكَ وَتنَاْوُلُكَ زَيْدًا</قول></مقطع>

    <مقطع هوية='١١١٤٧'>قَاْلَ <شاعر>الْمِسْكِيْنُ الدَّاْرِميُّ</شاعر></مقطع>
    <شاهدة هوية='٩٠٠٠١' شاعر="الْمِسْكِيْنُ الدَّاْرِميُّ">
       <بيت>
          <مصراع>فَمَا لَكَ وَ<ثبات>التَّلَدُّدَ</ثبات> حَوْلَ نَجْدٍ</مصراع>
          <مصراع>وَقَدْ غَصَّتْ تِهَاْمَةُ بَالرِّجَاْلِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٢٤٥٧٧'>وَقَاْلَ</مقطع>
    <شاهدة هوية='٠٥٦٢١'>
       <بيت>
          <مصراع>وَمَا لَكُم وَ<ثبات>الفَرْطَ</ثبات> لَا تَقْرَبُوْنَهُ</مصراع>
          <مصراع>وَقَدْ خِلْتُهُ أَدْنَى مَرَدٍّ لِعَاْقِلِ</مصراع>
      </بيت>
   </شاهدة>

    <مقطع هوية='٧٣٨٨٥'>وَيَدُلُّكَ أَيْضًا عَلَى قُبْحِهِ إِذَا حُمِلَ عَلَى <حرف>الشَّأْنِ</حرف></مقطع>
    <مقطع هوية='٦٨٧٤٣'>أَنَّكَ إِذَا قُلْتَ <قول هوية='٢٢٦٠٨'>مَا شَأْنُكَ وَمَا عَبْدُ اللهِ</قول></مقطع>
    <مقطع هوية='٥٤٠٩٨'>لَمْ يَكُنْ كَحُسْنِ <قول هوية='٦٥٣٤١'>مَا جَرْمٌ وَمَا ذَاْكَ السَّوِيْقُ</قول></مقطع>
    <مقطع هوية='٩١٣٥١'>لِأَنَّكَ تُوْهِمُ أَنَّ الشَّأْنَ هُوَ الَّذِي يَلْتَبِسُ بِزَيْدٍ</مقطع>
    <مقطع هوية='٠٣٠٦١'>وَإِنَّمَا يَلْتَبِسُ شَأْنُ الرَّجُلِ بشَأْنِ زَيْدٍ</مقطع>
    <مقطع هوية='٤٠٨٢٣'>وَمَنْ أَرَاْدَ ذٰلِكَ فَهُوَ مُلْغِزٌ</مقطع>
    <مقطع هوية='١١٥٥٢'>تَاْرِكٌ لِكَلَاْمِ النَّاْسِ الَّذِي يَسبُقُ إِلَى أَفْئِدَتِهِمْ</مقطع>
    <مقطع هوية='٤٠٨٨٦'>فَإِذَا أَظْهَرَ الِاسْمَ</مقطع>
    <مقطع هوية='٢٨٣٦٨'>فَقَاْلَ <قول هوية='٩٩٠٩٩'>مَا شَأْنُ عَبْدِ اللهِ وَأَخِيْهِ يَشْتِمُهُ</قول></مقطع>
    <مقطع هوية='٩١٦٤٧'>فَلَيْسَ إِلَّا الْجَرُّ</مقطع>
    <مقطع هوية='٥١٦٦٩'>لِأَنَّهُ قَدْ حَسُنَ أَنْ تَحْمِلَ الْكَلَاْمَ عَلَى <حرف>عَبْدِ اللهِ</حرف></مقطع>
    <مقطع هوية='٩١٩٥٩'>لِأَنَّ الْمُظْهَرَ الْمَجْرُوْرَ يُحْمَلُ عَلَيْهِ الْمَجْرُوْرُ</مقطع>
    <مقطع هوية='٤٧٩٦٨'>وَسَمِعْنَا بَعْضَ الْعَرَبِ يَقُوْل <قول هوية='٢١٧١٣'>مَا شَأْنُ عَبْدِ اللهِ وَالْعَرَبِ يَشْتِمُهَا</قول></مقطع>
    <مقطع هوية='٠٥٨٣٠'>وَسَمِعْنَا أَيْضًا مِنَ الْعَرَبِ المَّوْثُوْقِ بِهِمْ</مقطع>
    <مقطع هوية='١٣٨٢٧'>مَنْ يَقُوْلُ <قول هوية='٩١٠٦٧'>مَا شَأْنُ قَيْسٍ وَالبُرِّ تَسْرِقُهُ</قول></مقطع>
    <مقطع هوية='٦٢٢٥١'>لَمَّا أَظْهَرُوْا الِاسْمَ حَسُنَ عِنْدَهُم أَنْ يَحْمِلُوْا عَلَيْهِ الْكَلَاْمَ الْآخِرَ</مقطع>
    <مقطع هوية='٢٣٦٩٣'>فَإِذَا أَضْمَرْتَ فَكَأَنَّكَ قُلْتَ <قول هوية='٧٠٤٦٣'>مَا شَأْنُكَ وَمُلَاْبَسَةٌ زَيْدًا</قول></مقطع>
    <مقطع هوية='٢١٦٨٩'>أَوْ <حرف>وَمُلَاْبَسَتُكَ زَيْدًا</حرف></مقطع>
    <مقطع هوية='٦٤٧٤٢'>فَكَاْنَ أَنْ يَكُوْنَ <حرف>زَيْدٌ</حرف> عَلَى فِعْلٍ</مقطع>
    <مقطع هوية='٠٤٩١٤'>وَتَكُوْنَ الْـ<حرف>مُلَاْبَسَةُ</حرف> عَلَى الـ<حرف>شَّأْنِ</حرف></مقطع>
    <مقطع هوية='٥١١٧٩'>لِأَنَّ الشَّأْنَ مَعَهُ مُلَاْبَسَةٌ له</مقطع>
    <مقطع هوية='٠٣٩٩٠'>أَحْسَنَ مِنْ أَنْ يُجْرُوْا الْمُظْهَرَ عَلَى الْمُضْمَرِ</مقطع>
    <مقطع هوية='٠٥٢٧٢'>فَإِنْ أَظْهَرْتَ الِاْسْمَ فِي الْجَرِّ</مقطع>
    <مقطع هوية='١٥٣١٥'>عَمِلَ عَمَلَ <حرف>كَيْفَ</حرف>  فِي الرَّفْعِ</مقطع>
    <مقطع هوية='١٦٠٢٢'>وَمَنْ قَاْلَ <قول هوية='٠٣٨٢٧'>مَا أَنْتَ وَزَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٥٨٨٣٠'>قَاْلَ <قول هوية='٠٧٣١٣'>مَا شَأْنُ عَبْدِ اللهِ وَزَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٥٩٥٥٤'>كَأَنَّهُ قَاْلَ <قول هوية='٩٩٦٧٤'>مَا كَاْنَ شَأْنُ عَبْدِ اللهِ وَزَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٤٢٠٧٠'>وَحَمَلَه عَلَى  <حرف>كَاْنَ</حرف>
   </مقطع>
    <مقطع هوية='٤٤٢٠٥'>لِأَنَّ  <حرف>كَاْنَ</حرف>  تَقَعُ هٰهُنَا</مقطع>
    <مقطع هوية='٢٦٧٦٩'>وَالرَّفْعُ أَجْوَدُ وَأَكْثَرُ فِي <قول هوية='٤٨٥٩٠'>مَا أَنْتَ وَزَيْدٌ</قول></مقطع>
    <مقطع هوية='٦٦٥٨٠'>وَالْجَرُّ فِي قَوْلِكَ <قول هوية='٧٢٠٦٠'>مَا شَأْنُ عَبْدِ اللهِ وَزَيْدٍ</قول> أَحْسَنُ وَأَجْوَدُ</مقطع>
    <مقطع هوية='٨٣٨٣٨'>كَأَنَّهُ قَاْلَ <قول هوية='٠٢٥٧٩'>مَا شَأْنُ عَبْدِ اللهِ وَشَأْنُ زَيْدٍ</قول></مقطع>
    <مقطع هوية='٦٥٨٧٦'>وَمَن نَصَبَ فِي <قول هوية='٠٦٨٠٨'>مَا أَنْتَ وَزَيْدًا</قول></مقطع>
    <مقطع هوية='٢٤٧٣٥'>أَيْضًا قَاْلَ <قول هوية='٩٨٣٠٠'>مَا لِزَيْدٍ وَأَخَاْهُ</قول></مقطع>
    <مقطع هوية='٤٤٦٨٧'>كَأَنَّهُ قَاْلَ <قول هوية='٧٨١٨٧'>مَا كَاْنَ شَأْنُ زَيْدٍ وَأَخَاْهُ</قول></مقطع>
    <مقطع هوية='٩٨٨٨٢'>لِأَنَّهُ يَقَعُ فِي هٰذَا المَعْنَى هٰهُنَا</مقطع>
    <مقطع هوية='٨٥١١٣'>فَكَأَنَّهُ قَدْ كَاْنَ تَكَلَّمَ بِهِ</مقطع>
    <مقطع هوية='٤٢٥٣٧'>وَمِنْ ثَمَّ قَاْلُوْا <قول هوية='١٨٩٩١'>حَسْبُكَ وَزَيْدًا</قول></مقطع>
    <مقطع هوية='٥٨٤٨٤'>لَمَّا كَاْنَ فِيْهِ مَعْنَى  <حرف>كَفَاْك</حرف></مقطع>
    <مقطع هوية='٩٢٣٤٥'>وَقَبُحَ أَنْ يَحْمِلُوْهُ عَلَى الْمُضْمَرِ</مقطع>
    <مقطع هوية='٩٥٥٤١'>نَوَوْا الْفِعْلَ</مقطع>
    <مقطع هوية='٢٣١٣٥'>كَأَنَّهُ قَاْلَ <قول هوية='٨١٧٠٩'>حَسْبُكَ وَيُحْسِبُ أَخَاْكَ دِرْهَمٌ</قول>
   </مقطع>
   <مقطع هوية='٨٢٧٦١'>وَكَذٰلِكَ <حرف>كَفْيُكَ</حرف>
   وَ<حرف>قَدْكَ</حرف>
   وَ<حرف>قَطْكَ</حرف></مقطع>
    <مقطع هوية='١٦٧٨٤'>وَأَمَّا <قول هوية='٥٤٤٧٤'>وَيْلًا لَهُ وَأَخَاْهُ</قول></مقطع>
    <مقطع هوية='٥٠٩٧٠'>وَ<قول هوية='١٠٤٧٢'>وَيْلَهُ وَأَبَاْهُ</قول>
   </مقطع>
    <مقطع هوية='٩٦٤٤٨'>فَانْتَصَبَ عَلَى مَعْنَى الْفِعْلِ الَّذِي نَصَبَهُ</مقطع>
    <مقطع هوية='٤٣٥٩٨'>كَأَنَّكَ قُلْتَ <قول هوية='٦٩٢٩٥'>أَلْزَمَهُ اللهُ وَيْلَهُ وَأَبَاْهُ</قول></مقطع>
    <مقطع هوية='٩٤٩٦١'>فَانْتَصَبَ عَلَى مَعْنَى الْفِعْلِ الَّذِي نَصَبَهُ</مقطع>
    <مقطع هوية='٨٢٦٤٣'>فَلَمَّا كَاْنَ كَذٰلِكَ</مقطع>
    <مقطع هوية='١٦٨٦٨'>وَإِنْ كَاْنَ لَا يَظْهَرُ</مقطع>
    <مقطع هوية='٩٢١٨٠'>حَمَلَه عَلَى الْمَعْنَى</مقطع>
    <مقطع هوية='٠٥٨٣٤'>وَإِنْ قُلْتَ <قول هوية='٦٤٥١٩'>وَيْلٌ لَهُ وَأَبَاْهُ</قول> نَصَبْتَ</مقطع>
    <مقطع هوية='٩٥٤١٤'>لِأَنَّ فِيْهِ ذٰلِكَ الْمَعْنَى</مقطع>
    <مقطع هوية='٦٨٩١٩'>كَمَا أَنَّ <حرف>حَسْبُكَ</حرف> يَرْتَفِعُ بِالِابْتِدَاْءِ</مقطع>
    <مقطع هوية='٣٦٥٨٧'>وَفِيْهِ مَعْنَى <حرف>كَفَاْكَ</حرف></مقطع>
    <مقطع هوية='٥٦٤٩٦'>وَهُوَ نَحْوُ <قول هوية='٩٢٤٤٢'>مَرَرْتُ بِهِ وَأَبَاْهُ</قول></مقطع>
    <مقطع هوية='٥٢١٣٣'>وَإِنْ كَاْنَ أَقْوَى</مقطع>
    <مقطع هوية='٣١٧٢٦'>لِأَنَّكَ ذَكَرْتَ الْفِعْلَ</مقطع>
    <مقطع هوية='٧٨٦٠٢'>كَأَنَّكَ قُلْتَ <حرف>وَلَقِيْتُ أَبَاْهُ</حرف></مقطع>
    <مقطع هوية='٤٠٥٨١'>وَأَمَّا <قول هوية='٤٠٠٨٤'>هٰذَا لَكَ وَأَبَاْكَ</قول>
   </مقطع>
   <مقطع هوية='٥١١٢٥'>فَقَبِيْحٌ أَنْ تَنْصِبَ الْـ<حرف>أَبَ</حرف></مقطع>
    <مقطع هوية='٤١٧٧١'>لِأَنَّهُ لَمْ يَذْكُرْ فِعْلًا</مقطع>
    <مقطع هوية='٨٥٨٨٤'>وَلَا حَرْفًا فِيْهِ مَعْنَى فِعْلٍ</مقطع>
    <مقطع هوية='٢٠٨٢٤'>حَتَّى يَصِيْرَ كَأَنَّهُ قَدْ تَكَلَّمَ بِالْفِعْلِ</مقطع>

