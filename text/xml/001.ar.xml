<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢"
     درنبورج="١-١"
     هارون="١-١٢"
     يعقوب="١-٤٠"
     البكاء="١-٥٣"
     رقم="١">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ عِلْمِ مَا ٱلْ‍كَلِمُ مِنَ ٱلْعَرَبِيَّةِ</مقطع>
   </عنوان>
    <مقطع رقم="٢">فَالْكَلِمُ ٱسْمٌ وَفِعْلٌ</مقطع>
    <مقطع رقم="٣">وَحَرْفٌ جَاءَ لِمَعْنًى لَيْسَ بِاسْمٍ وَلَا فِعْلٍ</مقطع>
    <مقطع رقم="٤">فَالاِسْمُ  <حرف>رَجُل</حرف> و<حرف>فَرَس</حرف> و<حرف>حَائِط</حرف>
   </مقطع>
    <مقطع رقم="٥">وَأَمَّا الْفِعْلُ فَأَمْثِلَةٌ أُخِذَتْ مِنْ لَفْظِ أَحْدَاثِ الْأَسْمَاءِ</مقطع>
    <مقطع رقم="٨">وَبُنِيَتْ لِمَا مَضَى</مقطع>
    <مقطع رقم="٩">وَلِ‍مَا يَكُونُ وَلَمْ يَقَعْ</مقطع>
    <مقطع رقم="١٠">وَمَا هُوَ كَائِنٌ لَمْ يَنْقَطِعْ</مقطع>
    <مقطع رقم="١١">فَأَمَّا بِنَاءُ مَا مَضَى</مقطع>
    <مقطع رقم="١٢">فَـ<قول مثال="١">ذَهَبَ</قول> وَ<قول>سَمِعَ</قول> وَ<قول>مَكُثَ</قول> وَ<قول>حُمِدَ</قول>
   </مقطع>
    <مقطع رقم="١٣">وَأَمَّا بِنَاءُ مَا لَمْ يَقَعْ</مقطع>
    <مقطع رقم="١٤">فَإِنَّهُ قَوْلُكَ آمِرًا</مقطع>
    <مقطع رقم="١٥">
       <قول مثال="١">اِذْهَبْ</قول> وَ<قول>اُقْتُلْ</قول> وَ<قول مثال="١">اِضْرِبْ</قول>
   </مقطع>
    <مقطع رقم="١٦">وَمُخْبِرًا</مقطع>
    <مقطع رقم="١٧">
       <قول >يَقْتُلُ</قول> وَ<قول>يَذهَبُ</قول> وَ<قول مثال="١">يَضرِبُ</قول>
   </مقطع>
    <مقطع رقم="١٨">و <قول>يُقْتَلُ</قول> وَ<قول مثال="١">يُضرَبُ</قول></مقطع>
    <مقطع رقم="١٩">وكٰذَلِكَ بِنَاءُ مَا لَمْ يَنْقَطِعُ</مقطع>
    <مقطع رقم="٢٠">وَهُوَ كَائِنٌ إِذَا أَخْبَرْتَ</مقطع>
    <مقطع رقم="٢١">فَهٰذِهِ الْأَمْثِلَةُ</مقطع>
    <مقطع رقم="٢٢">الَّتِي أُخِذَتْ مِنْ لَفْظِ أَحْدَاثِ الْأَسْمَاءِ</مقطع>
    <مقطع رقم="٢٣">وَلَهَا أَبْنِيَةٌ كَثِيرَةٌ</مقطع>
    <مقطع رقم="٢٤">سَتُبَيَّنُ إِنْ شَاءَ اللهُ</مقطع>
    <مقطع رقم="٢٥">وَالْأَحْدَاثُ نَحْوُ</مقطع>
    <مقطع رقم="٢٦">
        <حرف مثال="١">الضَّرْبِ</حرف> وَ<حرف>الْحَمْدِ</حرف> وَ<حرف>الْقَتْلِ</حرف>
   </مقطع>
    <مقطع رقم="٢٧">وَأَمَّا مَا جَاءَ لِمَعْنًى</مقطع>
    <مقطع رقم="٢٨">وَلَيْسَ بِاسْمٍ وَلَا فِعْلٍ</مقطع>
    <مقطع رقم="٢٩">فَنَحْوُ  <حرف مثال="١">ثُمَّ</حرف> وَ<حرف>سَوْفَ</حرف> وَ<حرف>وَاوُ الْقَسَمِ</حرف> وَ<حرف>لَامُ الْإِضَافَةِ</حرف>
   </مقطع>
    <مقطع رقم="٣٠">وَنَحْوُهَا</مقطع>

    <التحرير>
      <تشكيل  نسخة="1" نسبة="90"/>
      <تقطيع  نسخة="1"/>
      <أقوال  نسخة="1" نسبة="100"/>
    </التحرير>

</باب>

