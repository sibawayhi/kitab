<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢"
     درنبورج="١-١"
     هارون="١-١٢"
     يعقوب="١-٤٠"
     البكاء="١-٥٣"
     رقم="١">
    <عنوان>
       <مقطع هوية='٤٨٢٢٠'>هٰذَا بَاْبُ عِلْمِ مَا الْكَلِمُ مِنَ الْعَرَبِيَّةِ</مقطع>
   </عنوان>
    <مقطع هوية='٠٩٥٢٤'>فَالْكَلِمُ ٱسْمٌ وَفِعْلٌ</مقطع>
    <مقطع هوية='٣٢١٧٩'>وَحَرْفٌ جَاْءَ لِمَعْنًى لَيْسَ بِاسْمٍ وَلَا فِعْلٍ</مقطع>
    <مقطع هوية='١٨٢١٥'>فَالاِسْمُ  <حرف>رَجُلٌ</حرف> و<حرف>فَرَسٌ</حرف> و<حرف>حَاْئِطٌ</حرف>
   </مقطع>
   <مقطع هوية='٦٨٣٣٥'>وَأَمَّا الْفِعْلُ فَأَمْثِلَةٌ</مقطع>
   <مقطع هوية='٢٣٢٩١'>أُخِذَتْ مِنْ لَفْظِ أَحْدَاْثِ الْأَسْمَاْءِ</مقطع>
    <مقطع هوية='٠٨٨٩٩'>وَبُنِيَتْ لِمَا مَضَى</مقطع>
    <مقطع هوية='٦١٦٩٤'>وَلِمَا يَكُوْنُ وَلَمْ يَقَعْ</مقطع>
    <مقطع هوية='٧٠٣٤١'>وَمَا هُوَ كَاْئِنٌ لَمْ يَنْقَطِعْ</مقطع>
    <مقطع هوية='٨٧٣٤٦'>فَأَمَّا بِنَاْءُ مَا مَضَى</مقطع>
    <مقطع هوية='٨٧٤٥٨'>فَـ<حرف>ذَهَبَ</حرف> وَ<حرف>سَمِعَ</حرف> وَ<حرف>مَكُثَ</حرف> وَ<حرف>حُمِدَ</حرف></مقطع>
    <مقطع هوية='٤٧٥١٤'>وَأَمَّا بِنَاْءُ مَا لَمْ يَقَعْ</مقطع>
    <مقطع هوية='٠٦١٢٦'>فَإِنَّهُ قَوْلُكَ آمِرًا</مقطع>
    <مقطع هوية='٠٩٤٣٧'> <حرف>اِذْهَبْ</حرف> وَ<حرف>ٱقْتُلْ</حرف> وَ<حرف>ٱضْرِبْ</حرف></مقطع>
    <مقطع هوية='٩٠٨٨٣'>وَمُخْبِرًا</مقطع>
    <مقطع هوية='٦٠٨٨٧'>
      <حرف>يَقْتُلُ</حرف> وَ<حرف>يَذهَبُ</حرف> وَ<حرف>يَضرِبُ</حرف></مقطع>
      <مقطع هوية='٧٣٨٢٨'>و <حرف>يُقْتَلُ</حرف> وَ<حرف>يُضرَبُ</حرف></مقطع>
    <مقطع هوية='٤٩٠٨٧'>وكٰذَلِكَ بِنَاْءُ مَا لَمْ يَنْقَطِعُ وَهُوَ كَاْئِنٌ</مقطع>
    <مقطع هوية='١٨٠٥٨'>إِذَا أَخْبَرْتَ</مقطع>
    <مقطع هوية='١٥٠٩٩'>فَهٰذِهِ الْأَمْثِلَةُ</مقطع>
    <مقطع هوية='٢٣٦٩٧'>الَّتِي أُخِذَتْ مِنْ لَفْظِ أَحْدَاْثِ الْأَسْمَاْءِ</مقطع>
    <مقطع هوية='٨٤٠٢٦'>وَلَهَا أَبْنِيَةٌ كَثِيرَةٌ سَتُبَيَّنُ إِنْ شَاْءَ اللهُ</مقطع>
    <مقطع هوية='٠٧٨٤٠'>وَالْأَحْدَاْثُ نَحْوُ الضَّرْبِ وَالْحَمْدِ وَالْقَتْلِ</مقطع>
    <مقطع هوية='٧٦٦٨٦'>وَأَمَّا مَا جَاْءَ لِمَعْنًى وَلَيْسَ بِاسْمٍ وَلَا فِعْلٍ</مقطع>
    <مقطع هوية='٩٠٥٤١'>فَنَحْوُ <حرف>ثُمَّ</حرف> وَ<حرف>سَوْفَ</حرف> وَوَاْوُ الْقَسَمِ وَلَاْمُ الْإِضَافَةِ وَنَحْوُهَا</مقطع>

