<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨"
     درنبورج="١-٧"
     هارون="١-٢٤"
     يعقوب="١-٥٠"
     البكاء="١-٧٠"
     رقم="٥">

   <عنوان>
      <مقطع هوية='٣٢٠٨٧' رقم="١">هٰذَا بَاْبُ مَا يَكُوْنُ في اللَّفْظِ مِنَ الأَعْرَاْضِ</مقطع>
   </عنوان>
   <مقطع هوية='٥٥٠٨٢' رقم="٢">اِعْلَمْ أَنَّهُمْ مِمَّا يَحْذِفُوْنَ الْكَلِمَ</مقطع>
   <مقطع هوية='٥٥٨٠٩' رقم="٤">وَإَنْ كَاْنَ أَصْلُهُ في الْكَلَاْمِ غَيْرَ ذٰلِكَ</مقطع>
   <مقطع هوية='٤٩٦٢٦' رقم="٥">وَيَحْذِفُوْنَ</مقطع>
   <مقطع هوية='٥٥٠٠٢' رقم="٦">وَيُعَوِّضُوْنَ</مقطع>
   <مقطع هوية='٩٢٣٣٧' رقم="٧">وَيَسْتَغْنُوْنَ</مقطع>
   <مقطع هوية='٨١٥٨٢' رقم="٨">بِالشَّيْءِ عَنِ الشَّيْءِ الَّذِي أَصْلُهُ في كَلَامِهِم</مقطع>
   <مقطع هوية='٤٤٧٤٩' رقم="٩">أَنْ يُسْتَعْمَلَ حَتَّى يَصِيْرَ سَاْقِطًا</مقطع>
   <مقطع هوية='٤٠٩٥٥' رقم="١٠">وَسَتَرَى ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
   <مقطع هوية='٠٢٢١١' رقم="١١">فَمِمَّا حُذِفَ وَأَصْلُهُ في الْكَلَامِ غَيْرُ ذٰلِكَ</مقطع>
   <مقطع هوية='٨٢٧٦٣' رقم="١٣"><حرف>لَمْ يَكُ</حرف> وَ<حرف>لَا أَدْرِ</حرف></مقطع>
   <مقطع هوية='١٧٧١٦' رقم="١٤">وأَشْبَاهُ ذٰلِكَ</مقطع>
   <مقطع هوية='٥٧١٦٩' رقم="١٥">وَأَمَّا اسْتِغْنَاْؤُهُمْ بِالشَّيْءِ عَنِ الشَّيْءِ</مقطع>
   <مقطع هوية='٣٦١٧٠' رقم="١٦">فَإِنَّهُمْ يَقُوْلُونَ <حرف>يَدَعُ</حرف> وَلَا يَقُولُونَ <حرف>وَدَعَ</حرف></مقطع>
   <مقطع هوية='٨٨٢٩١' رقم="١٨">اِسْتَغْنَوْا عَنْهَا بِـ<حرف>تَرَكَ</حرف></مقطع>
   <مقطع هوية='٦٠٥١٤' رقم="١٩">وَأَشْبَاْهُ ذٰلِكَ كَثِيْرٌ</مقطع>
   <مقطع هوية='٦١٥٧٩' رقم="٢٠">وَالْعِوَضُ</مقطع>
   <مقطع هوية='٧١١٩١' رقم="٢١">قَوْلُهُمْ <حرف>زَنَاْدِقَةٌ</حرف> وَ<حرف>زَنَاْدِيْقُ</حرف></مقطع>
   <مقطع هوية='٣٢٥٢٨' رقم="٢٢">وَ<حرف>فَرَاْزِنَةٌ</حرف> وَ<حرف>فَرَاْزِيْنُ</حرف></مقطع>
   <مقطع هوية='٧٥٣٩٣' رقم="٢٣">حَذَفُوْا الْيَاْءَ وَعَوَّضُوْا الْهَاْءَ</مقطع>
   <مقطع هوية='٦٤٢١٢' رقم="٢٤">وَقَوْلُهُمْ <حرف>أَسْطَاْعَ يَسْطِيْعُ</حرف></مقطع>
   <مقطع هوية='٩٢٥٣٥' رقم="٢٥">وَإِنَّمَا هِيَ <حرف>أَطَاْعَ يُطِيْعُ</حرف></مقطع>
   <مقطع هوية='١٥١٦٠' رقم="٢٦">زَاْدُوْا السِّيْنَ</مقطع>
   <مقطع هوية='١٩٧٩٢' رقم="٢٧">عِوَضًا مِنْ ذَهَاْبِ حَرَكَةِ الْعَيْنِ مِنْ <حرف>أَفْعَلَ</حرف></مقطع>
   <مقطع هوية='٢١٣٤٨' رقم="٢٨">وَقَوْلُهُمُ <حرف>اللَّهُمَّ</حرف></مقطع>
   <مقطع هوية='٢٠٤٣٦' رقم="٢٩">حَذَفُوْا <حرف>يَا</حرف></مقطع>
   <مقطع هوية='٧٩٨٠٠' رقم="٣٠">وَأَلْحَقُوْا الْمِيْمَ عِوَضًا</مقطع>

