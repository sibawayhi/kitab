<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨"
     درنبورج="١-٧"
     هارون="١-٢٤"
     يعقوب="١-٥٠"
     البكاء="١-٧٠"
     رقم="٥">

   <عنوان>
      <مقطع رقم="١">هٰذَا بَابُ مَا يَكُونُ في اللَّفْظِ مِنَ الأَعْرَاضِ</مقطع>
   </عنوان>
   <مقطع رقم="٢">اِعْلَمْ أَنَّهُمْ مِمَّا</مقطع>
   <مقطع رقم="٣">يَحْذِفُونَ الْكَلِمَ</مقطع>
   <مقطع رقم="٤">وَإَنْ كَانَ أَصْلُهُ في الْكَلَامِ غَيْرَ ذٰلِكَ</مقطع>
   <مقطع رقم="٥">وَيَحْذِفُونَ</مقطع>
   <مقطع رقم="٦">وَيُعَوِّضُونَ</مقطع>
   <مقطع رقم="٧">وَيَسْتَغْنُونَ بِالشَّيْءِ عَنِ الشَّيْءِ</مقطع>
   <مقطع رقم="٨">الَّذِي أَصْلُهُ في كَلَامِهِم</مقطع>
   <مقطع رقم="٩">أَنْ يُسْتَعْمَلَ حَتَّى يَصِيرَ سَاقِطًا</مقطع>
   <مقطع رقم="١٠">وَسَتَرَى ذٰلِكَ إِنْ شَاءَ اللّٰهُ</مقطع>
   <مقطع رقم="١١">فَمِمَّا حُذِفَ</مقطع>
   <مقطع رقم="١٢">وَأَصْلُهُ في الْكَلَامِ غَيْرُ ذٰلِكَ</مقطع>
   <مقطع رقم="١٣">
      <قول>لَمْ يَكُ</قول> و <قول>لَا أَدْرِ</قول>
   </مقطع>
   <مقطع رقم="١٤">وأَشْبَاهُ ذٰلِكَ</مقطع>
   <مقطع رقم="١٥">وَأَمَّا اسْتِغْنَاؤُهُمْ بِالشَّيْءِ عَنِ الشَّيْءِ</مقطع>
   <مقطع رقم="١٦">فَإِنَّهُمْ يَقُولُونَ <قول>يَدَعُ</قول>
   </مقطع>
   <مقطع رقم="١٧">وَلَا يَقُولُونَ <قول>وَدَعَ</قول>
   </مقطع>
   <مقطع رقم="١٨">ِاسٌتَغْنَوْا عَنْهَا بِ‍ <قول>تَرَكَ</قول>
   </مقطع>
   <مقطع رقم="١٩">وَأَشْبَاهُ ذٰلِكَ كَثِيرٌ</مقطع>
   <مقطع رقم="٢٠">وَالْعِوَضُ</مقطع>
   <مقطع رقم="٢١">قَوْلُهُمْ <قول>زَنَادِقَةٌ</قول> و <قول>زَنَادِيْقُ</قول>
   </مقطع>
   <مقطع رقم="٢٢">و <قول>فَرَازِنَةٌ</قول> وَ <قول>فَرَازِيْنُ</قول>
   </مقطع>
   <مقطع رقم="٢٣">حَذَفُوا الْيَاءَ وَعَوَّضُوا الْهَاءَ</مقطع>
   <مقطع رقم="٢٤">وَقَوْلُهُمْ <قول>أَسْطَاعَ يَسْطِيعُ</قول>
   </مقطع>
   <مقطع رقم="٢٥">وَإِنَّمَا هِيَ <قول>أَطَاعَ يُطِيعُ</قول>
   </مقطع>
   <مقطع رقم="٢٦">زَادُوا السِّينَ</مقطع>
   <مقطع رقم="٢٧">عِوَضًا مِنْ ذَهَابِ حَرَكَةِ الْعَيْنِ مِنْ <حرف>أَفْعَلَ</حرف>
   </مقطع>
   <مقطع رقم="٢٨">وَقَوْلُهُمُ <قول>اللَّهُمَّ</قول>
   </مقطع>
   <مقطع رقم="٢٩">حَذَفُوا <حرف>يَا</حرف>
   </مقطع>
   <مقطع رقم="٣٠">وَأَلْحَقُوا الْمِيمَ عِوَضًا</مقطع>

   <التحرير>
     <تشكيل  نسخة="1" نسبة="100"/>
     <تقطيع  نسخة="1"/>
     <أقوال  نسخة="1" نسبة="100"/>
   </التحرير>

</باب>

