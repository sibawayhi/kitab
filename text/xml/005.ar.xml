     بلاق="١-٨"
     درنبورج="١-٧"
     هارون="١-٢٤"
     يعقوب="١-٥٠"
     البكاء="١-٧٠"
     رقم="٥">

   <عنوان>
      <مقطع هوية='٣٢٠٨٧'>هٰذَا بَاْبُ مَا يَكُوْنُ في اللَّفْظِ مِنَ الأَعْرَاْضِ</مقطع>
   </عنوان>
   <مقطع هوية='٥٥٠٨٢'>اِعْلَمْ أَنَّهُمْ مِمَّا يَحْذِفُوْنَ الْكَلِمَ</مقطع>
   <مقطع هوية='٥٥٨٠٩'>وَإَنْ كَاْنَ أَصْلُهُ في الْكَلَاْمِ غَيْرَ ذٰلِكَ</مقطع>
   <مقطع هوية='٤٩٦٢٦'>وَيَحْذِفُوْنَ</مقطع>
   <مقطع هوية='٥٥٠٠٢'>وَيُعَوِّضُوْنَ</مقطع>
   <مقطع هوية='٩٢٣٣٧'>وَيَسْتَغْنُوْنَ بِالشَّيْءِ عَنِ الشَّيْءِ</مقطع>
   <مقطع هوية='٨١٥٨٢'>الَّذِي أَصْلُهُ في كَلَامِهِم أَنْ يُسْتَعْمَلَ حَتَّى يَصِيْرَ سَاْقِطًا</مقطع>
   <مقطع هوية='٤٠٩٥٥'>وَسَتَرَى ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
   <مقطع هوية='٠٢٢١١'>فَمِمَّا حُذِفَ وَأَصْلُهُ في الْكَلَامِ غَيْرُ ذٰلِكَ</مقطع>
   <مقطع هوية='٨٢٧٦٣'><حرف>لَمْ يَكُ</حرف> وَ<حرف>لَا أَدْرِ</حرف></مقطع>
   <مقطع هوية='١٧٧١٦'>وأَشْبَاهُ ذٰلِكَ</مقطع>
   <مقطع هوية='٥٧١٦٩'>وَأَمَّا اسْتِغْنَاْؤُهُمْ بِالشَّيْءِ عَنِ الشَّيْءِ</مقطع>
   <مقطع هوية='٣٦١٧٠'>فَإِنَّهُمْ يَقُوْلُونَ <حرف>يَدَعُ</حرف> وَلَا يَقُولُونَ <حرف>وَدَعَ</حرف></مقطع>
   <مقطع هوية='٨٨٢٩١'>اِسْتَغْنَوْا عَنْهَا بِـ<حرف>تَرَكَ</حرف></مقطع>
   <مقطع هوية='٦٠٥١٤'>وَأَشْبَاْهُ ذٰلِكَ كَثِيْرٌ</مقطع>
   <مقطع هوية='٦١٥٧٩'>وَالْعِوَضُ</مقطع>
   <مقطع هوية='٧١١٩١'>قَوْلُهُمْ <حرف>زَنَاْدِقَةٌ</حرف> وَ<حرف>زَنَاْدِيْقُ</حرف></مقطع>
   <مقطع هوية='٣٢٥٢٨'>وَ<حرف>فَرَاْزِنَةٌ</حرف> وَ<حرف>فَرَاْزِيْنُ</حرف></مقطع>
   <مقطع هوية='٧٥٣٩٣'>حَذَفُوْا الْيَاْءَ وَعَوَّضُوْا الْهَاْءَ</مقطع>
   <مقطع هوية='٦٤٢١٢'>وَقَوْلُهُمْ <حرف>أَسْطَاْعَ يَسْطِيْعُ</حرف></مقطع>
   <مقطع هوية='٩٢٥٣٥'>وَإِنَّمَا هِيَ <حرف>أَطَاْعَ يُطِيْعُ</حرف></مقطع>
   <مقطع هوية='١٥١٦٠'>زَاْدُوْا السِّيْنَ</مقطع>
   <مقطع هوية='١٩٧٩٢'>عِوَضًا مِنْ ذَهَاْبِ حَرَكَةِ الْعَيْنِ مِنْ <حرف>أَفْعَلَ</حرف></مقطع>
   <مقطع هوية='٢١٣٤٨'>وَقَوْلُهُمُ <حرف>اللَّهُمَّ</حرف></مقطع>
   <مقطع هوية='٢٠٤٣٦'>حَذَفُوْا <حرف>يَا</حرف></مقطع>
   <مقطع هوية='٧٩٨٠٠'>وَأَلْحَقُوْا الْمِيْمَ عِوَضًا</مقطع>

