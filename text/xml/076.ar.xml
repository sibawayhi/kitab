    <عنوان>
       <مقطع هوية='١٩٣٣٤'>هٰذَا باْبٌ يُخْتَاْرُ فِيْهِ الرَّفْعُ</مقطع>
   </عنوان>
    <مقطع هوية='١٧٩٥٩'>وَذٰلِكَ قَوْلُكَ <قول هوية='٥٦٠٤٩'>لَهُ عِلْمٌ عِلْمُ الْفُقَهاْءِ</قول>
   </مقطع>
    <مقطع هوية='١٤٣٦٨'>وَ<قول هوية='٨٨٤٠٨'>لَهُ رَأْيٌ رَأْيُ الْأُصَلَاْءِ</قول>
   </مقطع>
    <مقطع هوية='٦٤٨٨٤'>وَإِنَّمَا كَاْنَ الرَّفْعُ فِي هٰذَا الْوَجْهَ</مقطع>
    <مقطع هوية='٢٦٦٤٣'>لِأَنَّ هٰذِهِ خِصَاْلٌ تَذْكُرُهَا فِي الرَّجُلِ</مقطع>
    <مقطع هوية='٢٣٥١٦'>كاْلحِلَمِ وَالْعَقْلِ وَالْفَضْلِ</مقطع>
    <مقطع هوية='٠٠٥١٦'>وَلَمْ تُرِدْ أَنْ تُخبِرَ بِأَنَّكَ مَرَرْتَ بِرَجُلٍ فِي حَاْلِ تَعَلُّمٍ وَلَا تَفَهُّمٍ</مقطع>
    <مقطع هوية='٨٥١٥٦'>وَلٰكِنَّكَ  أَرَدْتَ تَذْكُرُ الرَّجُلَ بفَضْلٍ فِيْهِ</مقطع>
    <مقطع هوية='١٧٩٩٣'>وَأَنْ تَجْعَلَ ذٰلِكَ خَصْلَةً قَدْ اسْتَكْمَلَهَا</مقطع>
    <مقطع هوية='١٣٩٦٢'>كَقَوْلِكَ <قول هوية='٩١٤٢٥'>لَهُ حَسَبٌ حَسَبُ الصَّاْلِحِيْنَ</قول>
   </مقطع>
    <مقطع هوية='٧٨٩٨٧'>لأَنَّ هٰذِهِ الْأَشْيَاْءَ وَمَا يُشْبِهُهَا صَاْرَتْ تَحْلِيَةً عِنْدَ النَّاْسِ وَعَلَاْمَاْتٍ</مقطع>
    <مقطع هوية='٧٦١١٥'>وَعَلَى هٰذَا الْوَجْهِ رُفِعَ الصَّوْتُ</مقطع>
    <مقطع هوية='٨٣٨٢٤'>وَإِنْ شِئْتَ نَصَبْتَ فَقُلْتَ <قول هوية='٩١٨٢٩'>لَهُ عِلْمٌ عِلْمَ الْفُقَهَاْءِ</قول>
   </مقطع>
    <مقطع هوية='٦٣٢١٢'>كَأَنَّكَ مَرَرْت بِهِ فِي حَاْلِ تَعَلُّمٍ وَتَفَقُّهٍ</مقطع>
    <مقطع هوية='٧٦٤٥٠'>وَكَأَنَّهُ لَمْ يَسْتَكْمِلْ أَنْ يُقَاْلَ <قول هوية='٥٩٧٤٢'>لَهُ عاْلِمٌ</قول></مقطع>
    <مقطع هوية='٤٢٢٠٢'>وَإِنَّمَا فُرِقَ بَيْنَ هٰذَا وَبَيْنَ الصَّوْتِ</مقطع>
    <مقطع هوية='٧٥٠٥٠'>لِأَنَّ الصَّوْتَ عِلاْجٌ</مقطع>
     <مقطع هوية='٩٢١٩٤'>وَأَنَّ الْعِلْمَ صَاْرَ عِنْدَهُم بِمَنْزِلَةِ الْيَدِ وَالرِّجْلِ</مقطع>
    <مقطع هوية='١٢٩٣٣'>وَيَدُلُّكَ عَلَى ذٰلِكَ قَوْلُهُمْ <قول هوية='٨٣١٠١'>لَهُ شَرَفٌ</قول>
   </مقطع>
    <مقطع هوية='٨٠٥٢٢'>وَ<قول هوية='٥٤٣٩٨'>له دِيْنٌ</قول>
   </مقطع>
    <مقطع هوية='٣١٨٧٦'>وَ<قول هوية='٣٣٦٤٩'>لَهُ فَهَمٌ</قول>
   </مقطع>
    <مقطع هوية='٥٤٣٢١'>وَلَوْ أَرَاْدَوْا أَنَّهُ يُدْخِلُ نَفْسَهُ فِي الدِّيْنِ وَلَمْ يَسْتَكْمِلْ أَنْ يُقَاْلَ لَهُ دِيْنٌ</مقطع>
    <مقطع هوية='٢٠٠٧٣'>لقَاْلُوْا <قول هوية='١٦٨٠٩'>يَتَدَيَّنُ وَلَيْسَ بذٰلِكَ</قول>
   </مقطع>
    <مقطع هوية='٧٧٦٤٥'>وَ<قول هوية='٥٣٢٦٧'>يَتَشَرَّفُ وَلَيْسَ لَهُ شَرَفٌ</قول>
   </مقطع>
    <مقطع هوية='١٥٧٦٦'>وَ<قول هوية='٢٨٢٠٤'>يَتَفَهَّمُ وَلَيْسَ لَهُ فَهَمٌ</قول>
   </مقطع>
    <مقطع هوية='٨٤٠٠٤'>فَلَمَّا كَاْنَ هٰذَا اللَّفْظُ لِلَّذِيْنَ لَمْ يَسْتَكْمِلُوْا مَا كَاْنَ غَيْرَ عِلَاْجٍ</مقطع>
    <مقطع هوية='١٨٤٧٦'>بَعُدَ النَّصْبُ فِي قَوْلِهِمْ <قول هوية='٣٠٦٢٥'>له عِلْمٌ عِلْمُ الْفُقَهَاْءِ</قول>
   </مقطع>
    <مقطع هوية='٩٤١٧٢'>وَإِذَا قَاْلَ <قول هوية='٦٧٨٢٠'>له صَوْتٌ صَوْتَ حِمَاْرٍ</قول>
   </مقطع>
    <مقطع هوية='٤١٨٥٤'>فَإِنَّمَا أَخْبَرَ أَنَّهُ مَرَّ بِهِ وَهُوَ يُصَوِّتُ صَوْتَ حِمَاْرٍ</مقطع>
    <مقطع هوية='٦٣١٦٥'>وَإِذَا قَاْلَ <قول هوية='١٧٩١٦'>لَهُ عِلْمٌ عِلْمُ الْفُقَهَاْءِ</قول></مقطع>
    <مقطع هوية='٤٤٣٠٢'>فَهُوَ يُخْبِرُ عَمَّا قَدْ اسْتَقَرَّ فِيْهِ قَبْلَ رُؤْيَتِهِ وَقَبْلَ سَمْعِهِ مِنْهُ</مقطع>
    <مقطع هوية='٠٨٢٠٥'>أَوْ رَآهُ يَتَعَلَّمُ فَاْسْتَدَلَّ بِحُسْنِ تَعَلُّمِهِ عَلَى مَا عِنْدَهُ مِنَ الْعِلْمِ</مقطع>
    <مقطع هوية='٢٧٠١٧'>وَلَمْ يُرِدْ أَنْ يُخْبِرَ أَنَّه إِنَّمَا بَدَأَ فِي عِلَاْجِ الْعِلْمِ فِي حَاْلِ لُقِيِّهِ إِيَّاْهُ</مقطع>
    <مقطع هوية='٦٧٣٦٦'>لِأَنَّ هٰذَا لَيْسَ مِمَّا يُثْنَى بِهِ</مقطع>
    <مقطع هوية='٣٤٩٦١'>وَإِنَّمَا الثَّناْءَ فِي هٰذَا الْمَوْضِعِ أَنْ يُخْبِرَ بِمَا اسْتَقَرَّ فِيْهِ</مقطع>
    <مقطع هوية='٣٨١٣٧'>وَلَا يُخْبِرُ أَنَّ أَمْثَلَ شيْءٍ كَاْنَ مِنْهُ التَّعَلُّمُ فِي حَاْلِ لِقاْئِه</مقطع>

