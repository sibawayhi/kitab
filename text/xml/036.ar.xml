  <عنوان>
    <مقطع هوية='٦٥٦٦٧'>هٰذَا بَابٌ مِنَ الْفِعْلِ يُبْدَلُ فِيْهِ الْآخِرُ مِنْ الْأَوَّلِ</مقطع>
    <مقطع هوية='٥١٣٧٠'>وَيُجْرَى عَلَى الِاسْمِ كَمَا يُجْرَى <حرف>أَجْمَعُوْنَ</حرف> عَلَى الاسْمِ</مقطع>
    <مقطع هوية='٦٧٣٥٨'>وَيُنْصَبُ بِالْفِعْلِ لِأَنَّهُ مَفْعُوْلٌ</مقطع>
  </عنوان>

  <مقطع هوية='٥٢٢٠٨'>فَالَبَدَلُ أَنْ تَقُوْلَ  <قول هوية='٥٠٩٠٠'>ضُرِبَ عَبْدُ اللّٰهِ ظَهْرُهُ وَبَطْنُهُ</قول>
  </مقطع>
  <مقطع هوية='٠٩٨٤٧'>وَ<قول هوية='٣٦٤٤٢'>ضُرِبَ زَيْدٌ الظَّهْرُ وَالْبَطْنُ</قول>
  </مقطع>
  <مقطع هوية='٨٦٤٦٠'>وَ<قول هوية='٠٩٦٨٨'>قُلِبَ عَمْرٌو ظَهْرُهُ وَبَطْنُهُ</قول>
  </مقطع>
  <مقطع هوية='٤٩٩٢١'>وَ<قول هوية='٤٣٧٢٩'>مُطِرْنَا سَهْلُنَا وَجَبَلُنَا</قول>
  </مقطع>
  <مقطع هوية='٢٦٣١٠'>وَ<قول هوية='٩٨٠٤١'>مُطِرْنَا السَّهْلُ وَالْجَبَلُ</قول>
  </مقطع>
  <مقطع هوية='٠٥٩٢٦'>وَإِنْ شِئْتَ كَانَ عَلَى الاسْمِ بِمَنْزِلَةِ <حرف>أَجْمَعِيْنَ</حرف> تَوْكِيدًا</مقطع>
    <مقطع هوية='٢٩٩٤٦'>وَإِنْ شِئْتَ نَصَبْتَ تَقُوْلُ  <قول هوية='٦١٣٢١'>ضُرِبَ زَيْدٌ الظَّهْرَ وَالْبَطْنَ</قول>
  </مقطع>
  <مقطع هوية='٤٥٤٣٨'>وَ<قول هوية='٣٤١٣٢'>مُطِرْنَا السَّهْلَ وَالْجَبَلَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٨٢٥'>وَ<قول هوية='٤٦٢٣٥'>قُلِبَ زَيْدٌ ظَهْرَهُ وَبَطْنَهُ</قول>
  </مقطع>
  <مقطع هوية='٨٥٢١٠'>فَالْمَعْنَىْ أَنَّهُمْ مُطِرُوا في السَّهْلِ وَالْجَبَلِ</مقطع>
  <مقطع هوية='٨٥٨٤٢'>وَقُلِبَ <حرف>عَلَى</حرف> الظَّهْرِ وَالْبَطْنِ</مقطع>
  <مقطع هوية='٥٠٩٥١'>وَلَكِنَّهُمْ أَجَازُوْا هٰذَا كَمَا أَجَازُوْا قَوْلَهُمْ  <قول هوية='٦٥٠٥٠'>دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع هوية='٦٩٣٧٤'>وَإِنَّمَا مَعْنَاهُ  <قول هوية='١٣٦٦٧'>دَخَلْتُ في الْبَيْتِ</قول>
  </مقطع>
  <مقطع هوية='٦٣٦٩١'>وَالْعَامِلُ فِيْهِ الْفِعْلُ</مقطع>
  <مقطع هوية='٥٣٠٩٢'>وَلَيْسَ الْمُنْتَصِبُ هٰهُنَا بِمَنْزِلَةِ الظَّرْفِ</مقطع>
  <مقطع هوية='٧٤٠٢٠'>لِأَنَّكَ لَوْ قُلْتَ  <قول هوية='٩٦٥٨٥'>قُلِبَ هُوَ ظَهْرُهُ وَبَطْنُهُ</قول>
  </مقطع>
  <مقطع هوية='٧٤٢٣٣'>وَأَنْتَ تَعْنِي <حرف>شَيْئًا عَلَى ظَهْرِهِ</حرف> لَمْ يَجُزْ</مقطع>
  <مقطع هوية='١١١٣٨'>وَلَمْ يُجِيْزُوْهُ في غَيْرِ السَّهْلِ وَالْجَبَلِ وَالظَّهْرِ وَالْبَطْنِ</مقطع>
  <مقطع هوية='٦٤٩٠٣'>كَمَا لَمْ يَجُزْ  <قول هوية='٦٥٧٢٦'>دَخَلْتُ عَبْدَ اللّٰهِ</قول>
  </مقطع>
  <مقطع هوية='٨٩٢٧٨'>فَجَازَ هٰذَا في ذَا وَحْدَهُ</مقطع>
  <مقطع هوية='٣٠١٠٨'>كَمَا لَمْ يَجُزْ  <حرف>دَخَلْتُ</حرف> [حَذْفُ الْجَرِّ] إِلَّا في الْأَمَاكِنِ في مِثْلِ  <قول هوية='٩٤٣٦٧'>دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع هوية='٠٣١٧٣'>وَاخْتُصَّتْ بِهٰذًا</مقطع>
  <مقطع هوية='٥٠٨١٦'>كَمَا أَنَّ  <حرف>لَدُنْ</حرف> مَعَ  <حرف>غُدْوَةً</حرف> لَهَا حَالٌ لَيْسَتْ في غَيْرِهَا مِنَ الْأَسْمَاءِ</مقطع>
  <مقطع هوية='٧٠٨٥٨'>وَكَمَا أَنَّ  <حرف>عَسَىْ</حرف> لَهَا في قَوْلِهِمْ  <قول هوية='١١١٤٣'>عَسَىْ الْغُوَيْرُ أَبْؤُسًا</قول> حَالٌ لَا تَكُوْنُ في سَائِرِ الْأَشْيَاءِ</مقطع>
  <مقطع هوية='٢٩٨٦٥'>وَنَظِيْرُ هٰذَا أَيْضًا في أَنَّهُمْ حَذَفُوا حَرْفَ الْجَرِّ لَيْسَ إِلًّا</مقطع>
  <مقطع هوية='١٨٠٨٧'>قَوْلُهُمْ  <قول هوية='٥٨٣٠٩'>نُبِّئْتُ زَيْدًا قَالَ ذَاكَ</قول>
  </مقطع>
  <مقطع هوية='٣٦٠٩٦'>إِنَّمَا يُرِيْدُ  <حرف>عَنْ زَيْدٍ</حرف>
  </مقطع>
  <مقطع هوية='٩٢٢٠٨'>إِلَّا أَنَّ مَعْنَىْ الْأَوَّلِ مَعْنَىْ الْأَمَاكِنِ</مقطع>
  <مقطع هوية='٨٨٧٠٢'>وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّهُمْ يَقُوْلُوْنَ  <قول هوية='٣٥٤٣٢'>مُطِرْنَا الزَّرْعَ وَالضَّرْعَ</قول>
  </مقطع>
  <مقطع هوية='٩١١٦٤'>وَإِنْ شِئْتَ رَفَعْتَ عَلَى الْبَدَلِ وَعَلَى أَنْ تُصَيِّرَهُ بِمَنْزِلَةِ  <حرف>أَجْمَعِيْنَ</حرف> تَأْكِيدًا</مقطع>
  <مقطع هوية='٥٦١٩٦'>فَإِنْ قُلْتَ  <قول هوية='٨١٣٧٢'>ضُرِبَ زَيْدٌ الْيَدُ وَالرِّجْلُ</قول>
  </مقطع>
  <مقطع هوية='٠٢٥٦٩'>جَازَ عَلَى أَنْ يَكُوْنَ بَدَلًا وَأَنْ يَكُوْنَ تَوْكِيْدًا</مقطع>
  <مقطع هوية='٧٤٣٥٧'>وَإِنْ نَصَبْتَهُ لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية='٧١٠٥٢'>لِأَنَّ الْفِعْلَ إِنَّمَا أُنْفِذَ في هَذِهِ الْأَسْمَاءِ خَاصَّةً إِلَى الْمَنْصُوْبِ إِذَا حَذَفْتَ مِنْهُ حَرْفَ الْجَرِّ</مقطع>
  <مقطع هوية='٥٨٢٩٩'>إِلَّا أَنْ تَسْمَعَ الْعَرَبَ تَقُوْلُ في غَيْرِهِ</مقطع>
  <مقطع هوية='٠٤١٦٨'>وَقَدْ سَمِعْنَاهُمْ يَقُوْلُوْنَ  <قول هوية='٧٨٩٠٦'>مَطَرَتْهُمْ ظَهْرًا وَبَطْنًا</قول>
  </مقطع>
  <مقطع هوية='٣٤٣١١'>وَتَقُوْلُ  <قول هوية='٧٢٧٢٩'>مُطِرَ قَوْمُكَ اللَّيْلَ وَالنَّهَارَ</قول>
  </مقطع>
  <مقطع هوية='٥٨٨٣٤'>عَلَى الظَّرْفِ وَعَلَى الْوَجْهِ الْآخَرِ</مقطع>
  <مقطع هوية='٢٥١٣٤'>وَإِنْ شِئْتَ رَفَعْتَهُ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٩٥٥٩٨'>كَمَا قَالَ  <قول هوية='٠٢٣٤٨'>صِيْدَ عَلَيْهِ اللَّيْلُ وَالنَّهَارُ</قول>
  </مقطع>
  <مقطع هوية='١٩٧١٦'>كَمَا قَالَ [وَهُوَ]  <قول هوية='٨١١٧٢'>نَهَارُهُ صَائِمٌ وَلَيْلُهُ قَائِمٌ</قول>
  </مقطع>
  <مقطع هوية='١٧٣٥٢'>وَكَمَا قَالَ جَرِيْرٌ</مقطع>
  <شاهدة هوية='٧٣٠٠٣'>
    <بيت>
      <مصراع>لَقَدْ لُمْتِنَا يَا أُمَّ غَيْلَانَ في السُّرَى</مصراع>
      <مصراع>وَنِمْتِ وَمَا لَيْلُ الْمَطِيِّ بنَائِمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٨٤٠٠'>فَكَأَنَّهُ في كُلِّ هٰذَا جَعَلَ  <حرف>اللَّيْلَ</حرف> بَعْضَ الِاسْمِ</مقطع>
  <مقطع هوية='٦٥٣٤٥'>وَكَمَا قَالَ الشَّاعِرُ [وَقَالَ آخَرُ]</مقطع>

  <شاهدة هوية='٩٤٩٢٠'>
    <بيت>
      <مصراع>أَمَّا النَّهَارُ فَفِي قَيْدٍ وَسِلْسِلَةٍ</مصراع>
      <مصراع>وَاللَّيْلُ في قَعْرِ مَنْحُوتٍ مِنَ السَّاجِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٥٢٦٩٢'>فَكَأَنَّهُ جَعَلَ النَّهَارَ في قَيْدٍ وَاللَّيْلَ في بَطْنِ مَنْحُوتٍ</مقطع>
  <مقطع هوية='٥٣٢٣٢'>أَوْ جَعَلَهُ الاسْمَ أَوْ بَعْضَهُ</مقطع>

  <مقطع هوية='٦٥٦١٤'>وَإِنْ شِئْتَ قُلْتَ  <قول هوية='١٩٨٩٧'>ضُرِبَ عَبْدُ اللّٰهِ ظَهْرُهُ</قول>
  </مقطع>
  <مقطع هوية='٣٠٤٤١'>وَ<قول هوية='١٦٧٩١'>مُطِرَ قَوْمُكَ سَهْلُهُمْ</قول>
  </مقطع>
  <مقطع هوية='٠٨١١٢'>عَلَى قَوْلِكَ  <قول هوية='٧٩٢٩٠'>رَأَيْتُ الْقَوْمَ أَكْثَرُهُمْ</قول>
  </مقطع>
  <مقطع هوية='٠٧٤٤٣'>وَ<قول هوية='٢٤٥٦١'>رَأَيْتُ عَمْرًا شَخْصَهُ</قول>
  </مقطع>
  <مقطع هوية='٨٨٢٠٦'>قَالَ الأَعْشَى [كَمَا قَالَ]</مقطع>
  <شاهدة هوية='٢٦٧٧٨'>
    <بيت>
      <مصراع>فَكَأَنَّهُ لَهِقُ السَّرَاة كَأَنّهُ</مصراع>
      <مصراع>مَا حَاجِبَيْهِ مُعَيَّنٌ بِسَوَادِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٣٧٨١'>يُرِيْدُ  <حرف>كَأَنَّ حَاجِبَيْهِ</حرف>
  </مقطع>
  <مقطع هوية='٢٣٢٩٣'>فَأَبْدَلَ  <حرف>حَاجِبَيْهِ</حرف> مِنْ الْهَاءِ الَّتِي في  <حرف>كَأَنَّهُ</حرف> وَ<حرف>مَا</حرف> زَائِدَةٌ</مقطع>
  <مقطع هوية='٤٨٦٨٤'>وَقَالَ الْجَعْدِيّ</مقطع>
  <شاهدة هوية='٣٩٩٠٧'>
    <بيت>
      <مصراع>مَلَكَ الْخَوَرْنَقَ وَالسَّدِيْرَ وَدَانَهُ</مصراع>
      <مصراع>مَا بَيْنَ حِمْيَرَ أَهْلِهَا وَأُوَالِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٧٠١١٦'>يُرِيْدُ  <حرف>مَا بَيْنَ أَهْلِ حِمْيَرَ</حرف> فَأَبْدَلَ الْـ<حرف>أَهْلَ</حرف> مِنْ  <حرف>حِمْيَر</حرف>
  </مقطع>

