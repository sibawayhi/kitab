  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ مِنَ الْفِعْلِ يُبْدَلُ فِيْهِ الْآخِرُ مِنْ الْأَوَّلِ</مقطع>
    <مقطع رقم="٢">وَيُجْرَى عَلَى الِاسْمِ كَمَا يُجْرَى <حرف>أَجْمَعُوْنَ</حرف> عَلَى الاسْمِ</مقطع>
    <مقطع رقم="٣">وَيُنْصَبُ بِالْفِعْلِ لِأَنَّهُ مَفْعُوْلٌ</مقطع>
  </عنوان>

  <مقطع رقم="٤">فَالَبَدَلُ أَنْ تَقُوْلَ  <قول مثال="١">ضُرِبَ عَبْدُ اللّٰهِ ظَهْرُهُ وَبَطْنُهُ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول مثال="١">ضُرِبَ زَيْدٌ الظَّهْرُ وَالْبَطْنُ</قول>
  </مقطع>
  <مقطع رقم="٦">وَ<قول مثال="١">قُلِبَ عَمْرٌو ظَهْرُهُ وَبَطْنُهُ</قول>
  </مقطع>
  <مقطع رقم="٧">وَ<قول مثال="١">مُطِرْنَا سَهْلُنَا وَجَبَلُنَا</قول>
  </مقطع>
  <مقطع رقم="٨">وَ<قول مثال="١">مُطِرْنَا السَّهْلُ وَالْجَبَلُ</قول>
  </مقطع>
  <مقطع رقم="٩">وَإِنْ شِئْتَ كَانَ عَلَى الاسْمِ بِمَنْزِلَةِ <حرف>أَجْمَعِيْنَ</حرف> تَوْكِيدًا</مقطع>
  <هارون مجلد="١" صفحة="١٥٨"/>
  <مقطع رقم="١٠">وَإِنْ شِئْتَ نَصَبْتَ تَقُوْلُ  <قول مثال="١">ضُرِبَ زَيْدٌ الظَّهْرَ وَالْبَطْنَ</قول>
  </مقطع>
  <مقطع رقم="١١">وَ<قول مثال="١">مُطِرْنَا السَّهْلَ وَالْجَبَلَ</قول>
  </مقطع>
  <مقطع رقم="١٢">وَ<قول مثال="١">قُلِبَ زَيْدٌ ظَهْرَهُ وَبَطْنَهُ</قول>
  </مقطع>
  <مقطع رقم="١٣">فَالْمَعْنَىْ أَنَّهُمْ مُطِرُوا في السَّهْلِ وَالْجَبَلِ</مقطع>
  <مقطع رقم="١٤">وَقُلِبَ عَلَى الظَّهْرِ وَالْبَطْنِ</مقطع>
  <مقطع رقم="١٥">وَلَكِنَّهُمْ أَجَازُوْا هٰذَا كَمَا أَجَازُوْا قَوْلَهُمْ  <قول>دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع رقم="١٦">وَإِنَّمَا مَعْنَاهُ  <قول>دَخَلْتُ في الْبَيْتِ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَالْعَامِلُ فِيْهِ الْفِعْلُ</مقطع>
  <مقطع رقم="١٨">وَلَيْسَ الْمُنْتَصِبُ هٰهُنَا بِمَنْزِلَةِ الظَّرْفِ</مقطع>
  <مقطع رقم="١٩">لِأَنَّكَ لَوْ قُلْتَ  <قول>قُلِبَ هُوَ ظَهْرُهُ وَبَطْنُهُ</قول>
  </مقطع>
  <مقطع رقم="٢٠">وَأَنْتَ تَعْنِيْ  <حرف>شَيْئًا عَلَى ظَهْرِهِ</حرف> لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٢١">وَلَمْ يُجِيْزُوْهُ في غَيْرِ السَّهْلِ وَالْجَبَلِ وَالظَّهْرِ وَالْبَطْنِ</مقطع>
  <مقطع رقم="٢٢">كَمَا لَمْ يَجُزْ  <قول>دَخَلْتُ عَبْدَ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٢٣">فَجَازَ هٰذَا في ذَا وَحْدَهُ</مقطع>
  <مقطع رقم="٢٤">كَمَا لَمْ يَجُزْ  <حرف>دَخَلْتُ</حرف> [حَذْفُ الْجَرِّ] إِلَّا في الْأَمَاكِنِ في مِثْلِ  <قول>دَخَلْتُ الْبَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٢٥">وَاخْتُصَّتْ بِهٰذًا</مقطع>
  <مقطع رقم="٢٦">كَمَا أَنَّ  <حرف>لَدُنْ</حرف> مَعَ  <حرف>غُدْوَةً</حرف> لَهَا حَالٌ لَيْسَتْ في غَيْرِهَا مِنَ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="٢٧">وَكَمَا أَنَّ  <حرف>عَسَىْ</حرف> لَهَا في قَوْلِهِمْ  <قول>عَسَىْ الْغُوَيْرُ أَبْؤُسًا</قول> حَالٌ لَا تَكُوْنُ في سَائِرِ الْأَشْيَاءِ</مقطع>
  <مقطع رقم="٢٨">وَنَظِيْرُ هٰذَا أَيْضًا في أَنَّهُمْ حَذَفُوا حَرْفَ الْجَرِّ لَيْسَ إِلًّا</مقطع>
  <مقطع رقم="٢٩">قَوْلُهُمْ  <قول>نُبِّئْتُ زَيْدًا قَالَ ذَاكَ</قول>
  </مقطع>
  <مقطع رقم="٣٠">إِنَّمَا يُرِيْدُ  <حرف>عَنْ زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٣١">إِلَّا أَنَّ مَعْنَىْ الْأَوَّلِ مَعْنَىْ الْأَمَاكِنِ</مقطع>
  <مقطع رقم="٣٢">وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّهُمْ يَقُوْلُوْنَ  <قول>مُطِرْنَا الزَّرْعَ وَالضَّرْعَ</قول>
  </مقطع>
  <مقطع رقم="٣٣">وَإِنْ شِئْتَ رَفَعْتَ عَلَى الْبَدَلِ وَعَلَى أَنْ تُصَيِّرَهُ بِمَنْزِلَةِ  <حرف>أَجْمَعِيْنَ</حرف> تَأْكِيدًا</مقطع>
  <مقطع رقم="٣٤">فَإِنْ قُلْتَ  <قول>ضُرِبَ زَيْدٌ الْيَدُ وَالرِّجْلُ</قول>
  </مقطع>
  <مقطع رقم="٣٥">جَازَ عَلَى أَنْ يَكُوْنَ بَدَلًا وَأَنْ يَكُوْنَ تَوْكِيْدًا</مقطع>
  <مقطع رقم="٣٦">وَإِنْ نَصَبْتَهُ لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٣٧">لِأَنَّ الْفِعْلَ إِنَّمَا أُنْفِذَ في هَذِهِ الْأَسْمَاءِ خَاصَّةً إِلَى الْمَنْصُوْبِ إِذَا حَذَفْتَ مِنْهُ حَرْفَ الْجَرِّ</مقطع>
  <مقطع رقم="٣٨">إِلَّا أَنْ تَسْمَعَ الْعَرَبَ تَقُوْلُ في غَيْرِهِ</مقطع>
  <مقطع رقم="٣٩">وَقَدْ سَمِعْنَاهُمْ يَقُوْلُوْنَ  <قول>مَطَرَتْهُمْ ظَهْرًا وَبَطْنًا</قول>
  </مقطع>
  <مقطع رقم="٤٠">وَتَقُوْلُ  <قول>مُطِرَ قَوْمُكَ اللَّيْلَ وَالنَّهَارَ</قول>
  </مقطع>
  <مقطع رقم="٤١">عَلَى الظَّرْفِ وَعَلَى الْوَجْهِ الْآخَرِ</مقطع>
  <مقطع رقم="٤٢">وَإِنْ شِئْتَ رَفَعْتَهُ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٤٣">كَمَا قَالَ  <قول>صِيْدَ عَلَيْهِ اللَّيْلُ وَالنَّهَارُ</قول>
  </مقطع>
  <مقطع رقم="٤٤">كَمَا قَالَ [وَهُوَ]  <قول>نَهَارُهُ صَائِمٌ وَلَيْلُهُ قَائِمٌ</قول>
  </مقطع>
  <مقطع رقم="٤٥">وَكَمَا قَالَ جَرِيْرٌ</مقطع>
  <شاهدة رقم="١" xml:id="٣٦-١">
    <بيت>
      <مصراع>لَقَدْ لُمْتِنَا يَا أُمَّ غَيْلَانَ في السُّرَى</مصراع>
      <مصراع>وَنِمْتِ وَمَا لَيْلُ الْمَطِيِّ بنَائِمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٦">فَكَأَنَّهُ في كُلِّ هٰذَا جَعَلَ  <حرف>اللَّيْلَ</حرف> بَعْضَ الِاسْمِ</مقطع>
  <مقطع رقم="٤٧">وَكَمَا قَالَ الشَّاعِرُ [وَقَالَ آخَرُ]</مقطع>

  <شاهدة رقم="٢" xml:id="٣٦-٢">
    <بيت>
      <مصراع>أَمَّا النَّهَارُ فَفِي قَيْدٍ وَسِلْسِلَةٍ</مصراع>
      <مصراع>وَاللَّيْلُ في قَعْرِ مَنْحُوتٍ مِنَ السَّاجِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع رقم="٤٨">فَكَأَنَّهُ جَعَلَ النَّهَارَ في قَيْدٍ وَاللَّيْلَ في بَطْنِ مَنْحُوتٍ</مقطع>
  <مقطع رقم="٤٩">أَوْ جَعَلَهُ الاسْمَ أَوْ بَعْضَهُ</مقطع>

  <مقطع رقم="٥٠">وَإِنْ شِئْتَ قُلْتَ  <قول>ضُرِبَ عَبْدُ اللّٰهِ ظَهْرُهُ</قول>
  </مقطع>
  <مقطع رقم="٥١">وَ<قول>مُطِرَ قَوْمُكَ سَهْلُهُمْ</قول>
  </مقطع>
  <مقطع رقم="٥٢">عَلَى قَوْلِكَ  <قول>رَأَيْتُ الْقَوْمَ أَكْثَرُهُمْ</قول>
  </مقطع>
  <مقطع رقم="٥٣">وَ<قول>رَأَيْتُ عَمْرًا شَخْصَهُ</قول>
  </مقطع>
  <مقطع رقم="٥٤">قَالَ الأَعْشَى [كَمَا قَالَ]</مقطع>
  <شاهدة رقم="٣" xml:id="٣٦-٣">
    <بيت>
      <مصراع>فَكَأَنَّهُ لَهِقُ السَّرَاة كَأَنّهُ</مصراع>
      <مصراع>مَا حَاجِبَيْهِ مُعَيَّنٌ بِسَوَادِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٥">يُرِيْدُ  <حرف>كَأَنَّ حَاجِبَيْهِ</حرف>
  </مقطع>
  <مقطع رقم="٥٦">فَأَبْدَلَ  <حرف>حَاجِبَيْهِ</حرف> مِنْ الْهَاءِ الَّتِي في  <حرف>كَأَنَّهُ</حرف> وَمَا زَائِدَةٌ</مقطع>
  <مقطع رقم="٥٧">وَقَالَ الْجَعْدِيّ</مقطع>
  <شاهدة رقم="٤" xml:id="٣٦-٤">
    <بيت>
      <مصراع>مَلَكَ الْخَوَرْنَقَ وَالسَّدِيْرَ وَدَانَهُ</مصراع>
      <مصراع>مَا بَيْنَ حِمْيَرَ أَهْلِهَا وَأُوَالِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع رقم="٥٨">يُرِيْدُ  <حرف>مَا بَيْنَ أَهْلِ حِمْيَرَ</حرف> فَأَبْدَلَ الْـ<حرف>أَهْلَ</حرف> مِنْ  <حرف>حِمْيَر</حرف>
  </مقطع>

