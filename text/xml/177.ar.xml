  <عنوان>
    <مقطع هوية='٣٠١٤٠'>هٰذَا بَاْبُ مَا يَثْبُتُ فِيْهِ التَّنْوِيْنُ مِنَ الْأَسْمَاْءِ الْمَنْفِيَّةِ</مقطع>
  </عنوان>
  <مقطع هوية='٢٩٩٤٥'>وَذٰلِكَ مِنْ قِبَلِ أَنْ التَّنْوِيْنَ لَمْ يَصِرْ مُنْتَهَى الِاسْمِ</مقطع>
  <مقطع هوية='٠٧٧٩٧'>فَصَاْرَ كَأَنَّهُ حَرْفٌ قَبْلَ آخِرَ الِاسْمِ</مقطع>
  <مقطع هوية='٥٢٩٩٠'>وَإِنَّمَا يُحْذَفُ فِي النَّفْيِ وَالنِّدَاْءِ مُنْتَهَى الِاسْمِ</مقطع>
  <مقطع هوية='٩٨٤٧٦'>وَهُوَ قَوْلُكَ  <قول هوية='٩٠٧٣٤'>لَا خَيْرًا مِنْهُ لَكَ</قول>
  </مقطع>
  <مقطع هوية='٦٠٥٣١'>وَ<قول هوية='١٨٣٨٧'>لَا حَسَنًا وَجْهُهُ لَكَ</قول>
  </مقطع>
  <مقطع هوية='٥٣٤٤٢'>وَ<قول هوية='٦٩١٦٦'>لَا ضَاْرِبًا زَيْدًا لَكَ</قول>
  </مقطع>
  <مقطع هوية='٢٤٠٤٥'>لِأَنَّ مَا بَعْدَ  <حرف>حَسَنٍ</حرف> وَ<حرف>ضَاْرِبٍ</حرف>
  وَ<حرف>خَيْرٍ</حرف> صَاْرَ مِنْ تَمَاْمِ الِاسْمِ</مقطع>
  <مقطع هوية='٨٤٥١٥'>فَقَبُحَ عِنْدَهُمْ أَنْ يَحْذَفُوْا قَبْلَ أَنْ يَنْتَهُوْا إِلَى مُنْتَهَى الِاسْمِ</مقطع>
  <مقطع هوية='١٦٩٩٤'>لِأَنَّ الْحَذْفَ فِي النَّفْيِ فِي أَوَاْخِرِ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٤١٩٥٧'>وَمِثْلُ ذٰلِكَ قَوْلُكَ  <قول هوية='٧٩٢٨٠'>لَا عِشْرِيْنَ دِرْهَمًا لَكَ</قول>
  </مقطع>
  <مقطع هوية='٤٤٣٩١'>وَقَاْلَ الْخَلِيْلُ رَحِمَهُ اللهُ كَذٰلِكَ  <قول هوية='٣٩٥٨٣'>لَا آمِرًا بِالْمَعْرُوْفِ لَكَ</قول>
  </مقطع>
  <مقطع هوية='٣٦١٩١'>إِذَا جَعَلْتَ  <حرف>بِالْمَعْرُوْفِ</حرف> مِنْ تَمَاْمِ الِاسْمِ</مقطع>
  <مقطع هوية='٣٥٢٠٥'>وَجَعَلْتَهُ مُتَّصِلًا بِهِ</مقطع>
  <مقطع هوية='٢٣٥٦٨'>كَأَنَّكَ قُلْتَ  <قول هوية='٤٤٨١٠'>لَا آمِرًا مَعْرُوْفًا لَكَ</قول>
  </مقطع>
  <مقطع هوية='٢٨٦٠٦'>وَإِنْ قُلْتَ  <قول هوية='١٠١٣٣'>لَا آمِرَ بِمَعْرُوْفٍ</قول>
  </مقطع>
  <مقطع هوية='٣٧٤٧٨'>فَكَأَنَّكَ جِئْتَ بِمَعْرُوْفٍ بَعْدَ مَا بَنَيْتَ عَلَى الْأَوَّلِ كَلَاْمًا</مقطع>
  <مقطع هوية='١٨٥١٣'>كَقَوْلِكَ  <قول هوية='٨٠٧٤٩'>لَا آمِرَ فِي الدَّاْرِ يَوْمَ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٨٢٦٩٣'>وَإِنْ شَئْتَ جَعَلْتَهُ كَأَنَّكَ قُلْتَ  <قول هوية='٧٤١٨٤'>لَا آمِرَ يَوْمَ الْجُمْعَةِ فِيْهَا</قول>
  </مقطع>
  <مقطع هوية='٧١٠٨٦'>فَيَصِيْرَ الْمَبْنِيُّ عَلَى الْأَوَّلِ مُؤَخَّرًا</مقطع>
  <مقطع هوية='١٣٣٥٥'>وَيَكُوْنَ الْمُلْغَى مُقَدَّمًا</مقطع>
  <مقطع هوية='٠١٢٩٩'>وَكَذٰلِكَ  <قول هوية='٨٤٥٧٣'>لَا دَاْعِيًّا [رَاْغِبًاْ] إِلَى اللهِ لَكَ</قول>
  </مقطع>
  <مقطع هوية='٣١٩٨٢'>وَ<قول هوية='٥٦٩٩٧'>لَا مُغِيْرًا عَلَى الْأَعْدَاْءِ لَكَ</قول>
  </مقطع>
  <مقطع هوية='٩٤٢١٠'>إِذَا جَعَلْتَ الْآخِرَ مُتَّصِلًا بِالْأَوَّلِ كَاتِّصَاْلِ <حرف>مِنْكَ</حرف> بِـ<حرف>أَفْعَلَ</حرف>
  </مقطع>
  <مقطع هوية='٧٤٦٢٨'>وَإِنْ جَعَلْتَهُ مُنْفَصِلًا مِنَ الْأَوَّلِ كَانْفِصَاْلِ <حرف>لَكَ</حرف> مِنْ  <حرف>سَقْيًا لَكَ</حرف>
  </مقطع>
  <مقطع هوية='٢٢٤٨٤'>لَمْ تُنَوِّنْ لَأَنَّهُ يَصِيْرُ حِيْنَئِذٍ بِمَنْزِلَةِ  <حرف>يَوْمَ الْجُمْعَةِ</حرف>
  </مقطع>
  <مقطع هوية='٩٣٧٨٩'>وَإِنْ شِئْتَ قُلْتَ  <قول هوية='٨٢٦٩٤'>لَا آمِرًا يَوْمَ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٩٨١٨٢'>إِذَا نَفَيْتَ الْآمِرِيْنَ يَوْمَ الْجُمْعِةِ لِا مِنْ سَوَاْهُمْ مِنَ الْآمِرِيْنَ</مقطع>
  <مقطع هوية='٨٩١٩٦'>فَإِذَا قُلْتَ  <قول هوية='٦٦٧٢٥'>لَا آمِرَ يَوْمَ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٨٤٦٩٣'>فَأَنْتَ تَنْفِي الْآمِرِيْنَ كُلَّهُمْ ثُمَّ أَعْلَمْتَ فِي أَيْ حِيْنٍ</مقطع>
  <مقطع هوية='٢٨٩١١'>وَإِذَا قُلْتَ  <قول هوية='٠٥٥٦٦'>لَا ضَاْرِبًا يَوْمَ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٦٣٠٤٧'>فَإِنَّمَا تَنْفِي ضَاْرِبِي يَوْمِ الْجُمْعَةِ فِي يَوْمِهِ أَوْ فِي يَوْمِ غَيْرِهِ</مقطع>
  <مقطع هوية='٥٥٦١١'>وَتَجْعَلُ  <حرف>يَوْمَ الْجُمْعَةِ</حرف> فِيْهِ مُنْتَهَى الِاسْمِ</مقطع>
  <مقطع هوية='٨٤٥٦٥'>وَإِنَّمَا نَوَّنْتَ لِأَنَّهُ صَاْرَ مُنْتَهَى الِاسْمِ الْيَوْمُ</مقطع>
  <مقطع هوية='٧٨٩٢٨'>كَمَا صَاْرَ مَا ذَكَرْتَ مُنْتَهَى الِاسْمِ</مقطع>
  <مقطع هوية='٣٩٦٤٠'>وَصَاْرَ التَّنْوِيْنُ كَأَنَّهُ زِيَاْدَةٌ فِي الِاسْمِ قَبْلَ آخِرِهِ</مقطع>
  <مقطع هوية='٥٦٠٣٩'>نَحْوُ وَاوِ  <حرف>مَضْرُوْبٍ</حرف> وَأَلِفِ  <حرف>مُضَاْرِبٍ</حرف>
  </مقطع>
  <مقطع هوية='٩٨٥٠٥'>فَنَوَّنْتَ كَمَا نَوَّنْتَ فِي النِّدَاْءِ كُلَّ شَيْءٍ صَاْرَ مُنْتَهَى الِاسْمِ فِيْهِ مَا بَعْدَهُ وَلَيْسَ مِنْهُ</مقطع>
  <مقطع هوية='٦٦٧٥٩'>فَنَوِّنْ فِي هٰذَا مَا نَوَّنْتَهُ فِي النِّدَاْءِ مِمَّا ذَكَرْتُ لَكَ إِلَّا النَّكِرَةَ</مقطع>
  <مقطع هوية='٦٤٤٧٠'>فَإِنَّ النَّكِرَةَ فِي هٰذَا الْبَاْبِ بِمَنْزِلَةِ الْمَعْرِفَةِ فِي النِّدَاْءِ</مقطع>
  <مقطع هوية='٠٦٢٠٨'>وَلَا تَعْمَلُ  <حرف>لَا</حرف> إِلَّا فِي النَّكِرَةِ</مقطع>
  <مقطع هوية='٠٥٦٤٩'>تُجْعَلُ مَعَهَا بِمَنْزِلَةِ  <حرف>خَمْسَةَ عَشَرَ</حرف>
  </مقطع>
  <مقطع هوية='٥٦٧٦٨'>فَالنَّكِرَةُ هٰهُنَا بِمَنْزِلَةِ الْمَعْرِفَةِ هُنَاْكَ</مقطع>
  <مقطع هوية='٨٦٠٩٥'>إِلَّا مَا ذَكَرْتُ لَكَ</مقطع>

