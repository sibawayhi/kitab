    <عنوان>
       <مقطع هوية='٤٣٠٩٥'>هٰذَا بَاْبُ مَجْرَى نَعْتِ الْمَعْرِفَةِ عَلَيْهَا</مقطع>
   </عنوان>
    <مقطع هوية='٧٦٨٣٦'>فَالْمَعْرِفَةُ خَمْسَةُ أَشْيَاْءَ</مقطع>
    <قائمة>
       <وحدة>
          <مقطع هوية='٤١٥٢٩'>الْأَسْمَاْءُ الَّتِي هِيَ أَعْلَاْمٌ خَاْصَّةٌ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٨٨١٤٨'>وَالْمُضَاْفُ إِلَى الْمَعْرِفَةِ [ إِذَا لَمْ تُرِدْ مَعْنَى التَّنْوِيْنِ ]</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٤٩٧٦٧'>وَالْأَلِفُ وَاللَّاْمُ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٢٦٧٧٢'>وَالْأَسْمَاْءُ الْمُبْهَمَةُ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٣٥٣٠٧'>وَالْإِضْمَاْرُ</مقطع>
      </وحدة>
   </قائمة>

   <!--  section -->

    <مقطع هوية='٨٣١٨٢'>فَأَمَّا الْعَلَاْمَةُ اللَّاْزِمَةُ الْمُخْتَصَّةُ فَنَحْوُ  <حرف>زَيْدٍ</حرف>  وَ<حرف>عَمْرٍو</حرف>  وَ<حرف>عَبْدِ اللهِ</حرف>  وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='١٤٥٨٣'>وَإِنَّمَا صَاْرَ مَعْرِفَةً</مقطع>
    <مقطع هوية='٧٧٣٧٠'>لِأَنَّهُ اسْمٌ وَقَعَ عَلَيْهِ يُعَرَّفُ بِهِ بِعَيْنِهِ دُوْنَ سَاْئِرِ أُمَّتِهِ</مقطع>
    <مقطع هوية='٦٨٣٤٤'>وَأَمَّا الْمُضَاْفُ إِلَى الْمَعْرِفَةِ فَنَحْوُ قَوْلِكَ <قول هوية='٠٥٤٥٧'>هٰذَا أَخُوْكَ</قول>
   </مقطع>
    <مقطع هوية='٠٣٥٩٩'>وَ<قول هوية='٦٣٩٣٩'>مَرَرْتُ بِأَبِيْكَ</قول> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='١٣٦٩١'>وَإِنَّمَا صَاْرَ مَعْرِفَةً بِالْكَاْفِ الَّتِي أُضِيْفَ إِلَيْهَا</مقطع>
    <مقطع هوية='٢٢٩٥٥'>لِأَنَّ الْكَاْفَ يُرَاْدُ بِهَا الشَّيْءُ بِعَيْنِهِ دُوْنَ سَاْئِرِ أُمَّتِهِ</مقطع>
    <مقطع هوية='٥٨١٥٢'>وَأَمَّا الْأَلِفُ وَاللَّاْمُ فَنَحْوُ  <حرف>الرَّجُلِ</حرف>  وَ<حرف>الْفَرَسِ</حرف>  وَ<حرف>الْبَعِيْرِ</حرف>  وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='٦٢٦٢٦'>وَإِنَّمَا صَاْرَ مَعْرِفَةً</مقطع>
    <مقطع هوية='٣٠٥٢٤'>لِأَنَّكَ أَرَدْتَ بِالْأَلِفِ وَاللَّاْمِ الشَّيْءَ بِعَيْنِهِ دُوْنَ سَاْئِرِ أُمَّتِهِ</مقطع>
    <مقطع هوية='٧٠٣٧٠'>لِأَنَّكَ إِذَا قُلْتَ <قول هوية='٢١٥٥٧'>مَرَرْتُ بِرَجُلٍ</قول></مقطع>
    <مقطع هوية='٢٦٧٣٨'>فَإِنَّكَ إِنَّمَا زَعَمْتَ أَنَّكَ [ إِنَّمَا ] مَرَرْتَ بِوَاْحِدٍ مِمَّنْ يَقَعُ عَلَيْهِ هٰذَا الاْسْمُ</مقطع>
    <مقطع هوية='٠٣٥٩٨'>لَا تُرِيْدُ رَجُلًا بِعَيْنِهِ يَعْرِفُهُ الْمُخَاْطَبُ</مقطع>
    <مقطع هوية='٨٢٦١٣'>وَإِذَا أَدْخَلْتَ الْأَلِفَ وَاللَّاْمَ</مقطع>
    <مقطع هوية='٧٢٣٣٣'>فَإِنَّمَا تُذَكِّرُهُ رَجُلًا قَدْ عَرَفَهُ</مقطع>
    <مقطع هوية='٧٩٧٨٤'>فَتَقُوْلُ  <حرف>الرَّجُلُ الَّذِي مِنْ أَمْرِهِ كَذَا وَكَذَا</حرف>
   </مقطع>
    <مقطع هوية='٦١٥٨٤'>لِيَتَوَهَّمَ الَّذِى [كَاْنَ] عَهِدَهُ بِمَا تَذَكَّرَهُ مِنْ أَمْرِهِ</مقطع>
    <مقطع هوية='٨٧٤٢٩'>وَأَمَّا الْأَسْمَاْءُ الْمُبْهَمَةُ فَنَحْوُ  <حرف>هٰذَا</حرف>  [ وَ<حرف>هَذِهِ</حرف>  ] وَ<حرف>هٰذَاْنِ</حرف>  وَ<حرف>هَاْتَاْنِ</حرف>  وَ<حرف>هٰؤُلَاْءِ</حرف>  وَ<حرف>ذٰلِكَ</حرف>  وَ<حرف>تِلْكَ</حرف>  وَ<حرف>ذَاْنِكَ</حرف>  وَ<حرف>تَاْنِكَ</حرف>  وَ<حرف>أُوْلٰئِكَ</حرف>  وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='٦٨٦٣٦'>وَإِنَّمَا صَاْرَتْ مَعْرِفَةً</مقطع>
    <مقطع هوية='٤٤٧٦٤'>لِأَنَّهَا صَاْرَتْ أَسْمَاْءَ إِشَاْرَةٍ إِلَى الشَّيْءِ دُوْنَ سَاْئِرِ أُمَّتِهِ</مقطع>
     
    <مقطع هوية='٤٤٥٣٥'>وَأَمَّا الْإِضْمَاْرُ فَنَحْوُ  <حرف>هُوَ</حرف>  وَ<حرف>إِيَّاْهُ</حرف>  وَ<حرف>أَنْتَ</حرف>  وَ<حرف>أَنَا</حرف>  وَ<حرف>نَحْنُ</حرف>  وَ<حرف>أَنْتُمْ</حرف>  وَ<حرف>أَنْتُنَّ</حرف>  وَ<حرف>هُنَّ</حرف>  وَ<حرف>هُمْ</حرف>  وَ<حرف>هِيَ</حرف>
   </مقطع>
    <مقطع هوية='٥١٦٢٨'>وَالْـ<حرف>تَّاْءُ</حرف>  الَّتِي فِي  <حرف>فَعُلْتُ</حرف>  وَ<حرف>فَعَلْتَ</حرف>
        <حرف>وَفَعَلْتِ</حرف>
   </مقطع>
    <مقطع هوية='٩٧٩٠١'>وَمَا زِيْدَ عَلَى الـ<حرف>تَّاْءِ</حرف>  نَحْوَ قَوْلِكَ  <حرف>فَعَلْتُمَا</حرف>  وَ<حرف>فَعَلْتُمْ</حرف>  وَ<حرف>فَعَلْتُنَّ</حرف>
   </مقطع>
    <مقطع هوية='٦٢٢٢٦'>وَالْـ<حرف>وَاْوُ</حرف>  الَّتِي فِي  <حرف>فَعَلُوْا</حرف>
   </مقطع>
    <مقطع هوية='٩٥٢٣٣'>وَالـ<حرف>نُّوْنُ</حرف>  وَالـ<حرف>أَلِفُ</حرف>  اللَّتَاْنِ فِي  <حرف>فَعَلْنَا</حرف>  فِي الِاثْنَيْنِ وَالْجَمِيْعِ</مقطع>
    <مقطع هوية='٧٣٠٠٦'>وَالـ<حرف>نُّوْنُ</حرف>  فِي  <حرف>فَعَلْنَ</حرف>
   </مقطع>
    <مقطع هوية='٨٠٦٨٠'>وَالْإِضْمَاْرُ الَّذِي لَيْسَتْ لَهُ عَلَاْمَةٌ ظَاْهِرَةً نَحْوُ <قول هوية='٥١٨٥٠'>قَدْ فَعَلَ ذٰلِكَ</قول>
   </مقطع>
    <مقطع هوية='٠٩٧٧٠'>وَالـ<حرف>أَلِفُ</حرف>  الَّتِي فِي  <حرف>فَعَلَا</حرف>
   </مقطع>
    <مقطع هوية='٥٦٠٧١'>وَالْـ<حرف>كَاْفُ</حرف>  وَالْـ<حرف>هَاْءُ</حرف>  فِي  <حرف>رَأَيْتُكَ</حرف>  وَ<حرف>رَأَيْتُهُ</حرف>
   </مقطع>
    <مقطع هوية='٨٣٦٧٨'>وَمَا زِيْدَ عَلَيْهِمَا نَحْوُ  <حرف>رَأَيْتُكُمَا</حرف>  وَ<حرف>رَأَيْتُكُمْ</حرف>  وَ<حرف>رَأَيْتُهُمَا</حرف>  وَ<حرف>رَأَيْتَهُمْ</حرف>  وَ<حرف>رَأَيُتكُنَّ</حرف>  وَ<حرف>رَأَيْتُهُنَّ</حرف>
   </مقطع>
    <مقطع هوية='١٣٣٣٠'>وَالْـ<حرف>يَاْءُ</حرف>  فِي  <حرف>رَأَيْتُنِي</حرف>
   </مقطع>
    <مقطع هوية='٣٣٦٩٩'>وَالْـ<حرف>أَلِفُ</حرف>  وَالـ<حرف>نُّوْنُ</حرف>  اللَّتَاْنِ فِي  <حرف>رَأَيْتَنَا</حرف>  وَ<حرف>غُلَاْمِنَا</حرف>
   </مقطع>
    <مقطع هوية='٦٥٤٤٨'>وَالْـ<حرف>كَاْفُ</حرف>  وَالْـ<حرف>هَاْءُ</حرف>  اللَّتَاْنِ فِي  <حرف>بِكَ</حرف>  وَ<حرف>بِهِ</حرف>  وَ<حرف>بِهَا</حرف>
   </مقطع>
    <مقطع هوية='٧٩١٣٤'>وَمَا زِيْدَ عَلَيْهِنَّ نَحْوُ قَوْلِكَ  <حرف>بِكُمَا</حرف>  وَ<حرف>بِكُمْ</حرف>  وَ<حرف>بِكُنَّ</حرف>  وَ<حرف>بِهِمَا</حرف>  وَ<حرف>بِهِمْ</حرف>  وَ<حرف>بِهِنَّ</حرف>
   </مقطع>
    <مقطع هوية='٥١٣٢١'>وَالْـ<حرف>يَاْءُ</حرف>  فِي  <حرف>غُلَاْمِي</حرف>  وَ<حرف>بِي</حرف>
   </مقطع>
    <مقطع هوية='٨٤٦٦٥'>وَإِنَّمَا صَاْرَ الْإِضْمَاْرُ مَعْرِفَةً</مقطع>
    <مقطع هوية='٠٦٥٩٧'>لِأَنَّكَ إِنَّمَا تُضْمِرُ اسْمًا بَعْدَ مَا تَعْلَمُ أَنَّ مَنْ تُحَدِّثُ قَدْ عَرَفَ مَنْ تَعْنِي وَمَا تَعْنِي</مقطع>
    <مقطع هوية='٠٠٢٢٧'>وَأَنَّكَ تُرِيْدُ شَيْئًا يَعْلَمُهُ</مقطع>
    <مقطع هوية='٥٥٦٤٦'>وَاعْلَمْ أَنَّ الْمَعْرِفَةَ لَا تُوْصَفُ إِلَّا بِمَعْرِفَةٍ</مقطع>
    <مقطع هوية='٦٨٠٩٣'>كَمَا أَنَّ النَّكِرَةَ لَا تُوْصَفُ إِلَّا بِنَكِرَةٍ</مقطع>
    <مقطع هوية='٤٦٢٣٣'>وَاعْلَمْ أَنَّ الْعَلَمَ الْخَاْصَّ مِنَ الْأَسْمَاْءِ يُوْصَفُ بِثَلَاْثَةِ أَشْيَاْءَ</مقطع>
    <قائمة>
       <وحدة>
          <مقطع هوية='٤٩٩٤٨'>بِاْلْمُضَاْفِ إِلَى مِثْلِهِ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٥٣٠٨٣'>وَبِاْلْأَلِفِ وَاللَّاْمِ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٧٣٤٢٨'>وَبِاْلْأَسْمَاْءِ الْمُبْهَمَةِ</مقطع>
      </وحدة>
   </قائمة>
    <مقطع هوية='٤٠٩٧٦'>فَأَمَّا الْمُضَاْفُ فَنَحْوُ <قول هوية='٤٢٤٩٦'>مَرَرْتُ بِزَيْدٍ أَخِيْكَ</قول>
   </مقطع>
    <مقطع هوية='١١٦٥٩'>وَالْأَلِفُ وَاللَّاْمُ نَحْوُ قَوْلِكَ <قول هوية='٣٩٤٨٢'>مَرَرْتُ بِزَيْدٍ الطَّوِيْلِ</قول> وَمَا أَشْبَهَ هٰذَا مِنَ الْإِضَاْفَةِ وَالْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٠٧٣١٦'>وَأَمَّا الْمُبْهَمَةُ فَنَحْوُ <قول هوية='٧٢٨٨٢'>مَرَرْتُ بِزَيْدٍ هٰذَا وَبِعَمْرٍو ذَاْكَ</قول>
   </مقطع>
     
    <مقطع هوية='٩٠٦٨٠'>وَالْمُضَاْفُ إِلَى الْمَعْرِفَةِ يُوْصَفُ بِثَلَاْثَةِ أَشْيَاْءَ</مقطع>
    <قائمة>
       <وحدة>
          <مقطع هوية='٠١٢١٣'>بِمَا أُضِيْفَ كَإِضَاْفَتِهِ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٦٠١٤٩'>وَبِاْلْأَلِفِ وَاللَّاْمِ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٦٣٧٥٤'>وَالْأَسْمَاْءُ الْمُبْهَمَةُ</مقطع>
      </وحدة>
   </قائمة>
    <مقطع هوية='٦١٤٩٠'>وَذٰلِكَ <قول هوية='١٤٣٧٨'>مَرَرْتُ بِصَاْحِبِكَ أَخِي زَيْدٍ</قول>
   </مقطع>
    <مقطع هوية='٢٧٦٩٤'>وَ<قول هوية='٧٢٩٦٨'>مَرَرْتُ بِصَاْحِبِكَ الطَّوِيْلِ</قول>
   </مقطع>
    <مقطع هوية='٨٦٢٨٥'>وَ<قول هوية='٢١٦١٨'>مَرَرْتُ بِصَاْحِبِكِ هٰذَا</قول>
   </مقطع>
    <!--
            <جزء عَنْوْاْن="وَصْفُ الْأَلِفِ وَاللَّاْمِ">
  -->
    <مقطع هوية='٠٥٢٩٦'>فَأَمَّا الْأَلِفُ وَاللَّاْمُ فَتُوْصَفُ</مقطع>
    <قائمة>
       <وحدة>
          <مقطع هوية='٨٩٠٩٣'>بِاْلْأَلِفِ وَاللَّاْمِ</مقطع>
      </وحدة>
       <وحدة>
          <مقطع هوية='٠٩٦١٢'>وَبِمَا أُضِيْفَ إِلَى الْأَلِفِ وَاللَّاْمِ</مقطع>
      </وحدة>
   </قائمة>
    <مقطع هوية='١٥١٢٣'>لِأَنَّ مَا أُضِيْفَ إِلَى الْأَلِفِ وَاللَّاْمِ بِمَنْزِلَةِ الْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٢٥٦٢٧'>فَصَاْرَ نَعْتًا كَمَا صَاْرَ الْمُضَاْفُ إِلَى غَيْرِ الْأَلِفِ وَاللَّاْمِ صِفَةً لِمَا لَيْسَ فِيْهِ الْأَلِفُ وَاللَّاْمُ</مقطع>
    <مقطع هوية='٢٨٧٧٦'>نَحْوَ<قول هوية='٧٥٣٠٣'>مَرَرْتُ بِزَيْدٍ أَخِيْكَ</قول>
   </مقطع>
    <مقطع هوية='١٦١٥٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٣٠٣٥٨'>مَرَرْتُ بِالْجَمِيْلِ النَّبِيْلِ</قول>
   </مقطع>
    <مقطع هوية='٥٠٨٩٨'>وَ<قول هوية='٠١٧٣٦'>مَرَرْتُ بِالرَّجُلِ ذِي الْمَاْلِ</قول>
   </مقطع>

   <!-- but not مررتُ باْلطوْيْل أخيْكَ -->

    <مقطع هوية='٠٧٩٠٤'>وَإِنَّمَا مَنَعَ  <حرف>أَخَاْكَ</حرف>  أَنْ يَكُوْنَ صِفَةً لِـ<حرف>الطَّوِيْلِ</حرف>  أَنَّ الْـ<حرف>أَخَ</حرف>  إِذَا أُضِيْفَ كَاْنَ أَخَصَّ</مقطع>
    <مقطع هوية='٠٩٤٤٤'>لِأَنَّهُ مُضَاْفٌ إِلَى الْخَاْصِّ وَإِلَى إِضْمَاْرِهِ</مقطع>
    <مقطع هوية='٠٣٦٣٦'>فَإِنَّمَا يَنْبَغِي لَكَ أَنْ تَبْدَأَ بِهِ</مقطع>
    <مقطع هوية='٤٧٤١٢'>وَإِنْ لَمْ تَكْتَفِ بِذٰلِكَ زِدْتَ مِنَ الْمَعْرِفَةِ مَا تَزْدَاْدُ بِهِ مَعْرِفَةً</مقطع>
    <مقطع هوية='٦٧٠٢٨'>وَإِنَّمَا مَنَعَ هٰذَا أَنْ يَكُوْنَ صِفَةً لِلـ<حرف>طَّوِيْلِ</حرف>  وَالـ<حرف>رَّجُلُ</حرف>
   </مقطع>
    <مقطع هوية='٢٤٣٥٧'>أَنَّ الْمُخْبِرَ أَرَاْدَ أَنْ يُقَرِّبَ [ رَبِّهِ ] شَيْئًا وَيُشِيْرُ إِلَيْهِ</مقطع>
    <مقطع هوية='٠١١٦١'>لِتَعْرِفَهُ بِقَلْبِكَ وَبِعَيْنِكِ دُوْنَ سَاْئِرِ الْأَشْيَاْءِ</مقطع>
    <مقطع هوية='٦٧٧٠٧'>وَإِذَا قَاْلَ  <حرف>الطَّوِيْلُ</حرف>  فَإِنَّمَا يُرِيْدُ أَنْ يُعَرِّفَكَ شَيْئًا بِقَلْبِكَ</مقطع>
    <مقطع هوية='٦٩٧٨٥'>وَلَا يُرِيْدُ أَنْ يُعَرِّفَكَهُ بِعَيْنِكَ</مقطع>
    <مقطع هوية='٩٨٧٩٠'>فَلِذٰلِكَ صَاْرَ هٰذَا يُنْعَتُ بِـ<حرف>الطَّوِيْلِ</حرف>  وَلَا يُنْعَتُ  <حرف>الطَّوِيْلُ</حرف> بِهٰذَا</مقطع>
    <مقطع هوية='٤٢٠٥٦'>لِأَنَّهُ صَاْرَ أَخَصُّ مِنْ  <حرف>الطَّوِيْلِ</حرف>  حِيْنَ أَرَاْدَ أَنْ يَعْرِفَهُ شَيْئًا بِمَعْرِفَةِ الْعَيْنِ وَمَعْرِفَةِ الْقَلْبِ</مقطع>
    <مقطع هوية='١٠٨٧١'>وَإِذَا قَاْلَ  <حرف>الطَّوِيْلُ</حرف>  فَإِنَّمَا عَرَّفَهُ شَيْئًا بِقَلْبِهِ دُوْنَ عَيْنِهِ</مقطع>
    <مقطع هوية='٨٦١٨٣'>فَصَاْرَ مَا اجْتَمَعَ فِيْهِ شَيْئَاْنِ أَخَصُّ</مقطع>
    <!--
            <جزء عَنْوْاْن="وَصْفُ الْأَسْمَاْءِ الْمُبْهَمَةِ">
  -->
    <مقطع هوية='٧٥٦٩٣'>وَاعْلَمْ أَنَّ الْمُبْهَمَةَ تُوْصَفَ بِالْأَسْمَاْءِ الَّتِي فِيْهَا الْأَلِفُ وَاللَّاْمُ وَالصِّفَاْتُ الَّتِي فِيْهَا الْأَلِفُ وَاللَّاْمُ جَمِيْعًا</مقطع>
    <مقطع هوية='٦٨١٦٨'>وَإِنَّمَا وُصِفَتْ بِالْأَسْمَاْءِ [ الَّتِي فِيْهَا الْأَلِفِ وَاللَّاْمِ ]</مقطع>
     
    <مقطع هوية='٣٣١٥٠'>لِأَنَّهَا وَالْمُبْهَمَةَ كَشَيْءٍ وَاحِدٍ</مقطع>
    <مقطع هوية='٨٦٦٣١'>وَالصِّفَاْتُ الَّتِي فِيْهَا الْأَلِفُ وَاللَّاْمُ هِيَ فِي هٰذَا الْمَوْضِعِ بِمَنْزِلَةِ الْأَسْمَاْءِ</مقطع>
    <مقطع هوية='٠٩٧٩٩'>وَلَيْسَتْ بِمَنْزِلَةِ الصِّفَاْتِ فِي  <حرف>زَيْدٍ</حرف>  وَ<حرف>عَمْرٍو</حرف>  إِذَا قُلْتَ <قول هوية='١١٦١٥'>مَرَرْتُ بِزَيْدٍ الطَّوِيْلِ</قول>
   </مقطع>
    <مقطع هوية='٧٥٠٣٩'>لِأَنِّي لَا أُرِيْدُ أَنْ أَجْعَلَ  <حرف>هٰذَا</حرف>  اسْمًا خَاْصًّا وَلَا صِفَةً لَهُ يُعْرَفُ بِهَا</مقطع>
    <مقطع هوية='٢٥٠٨١'>وَكَأَنَّكَ أَرَدْتَ أَنْ تَقُوْلَ <قول هوية='٣٢٧٥٥'>مَرَرْتُ بِالرَّجُلِ</قول>
   </مقطع>
    <مقطع هوية='١٨١١٩'>وَلَكِنَّكَ إِنَّمَا ذَكَرْتَ  <حرف>هٰذَا</حرف>  لِتُقَرِّبَ بِهِ الشَّيْءَ وَتُشِيْرُ إِلَيْهِ</مقطع>
    <مقطع هوية='٥٥٤٥٢'>وَيَدُّلُكَ عَلَى ذٰلِكَ أَنَّكَ لَا تَقُوْلُ</مقطع>
    <مقطع هوية='٨٣٣٧٧'>
       <قول هوية='٥٦٩٧٠'>مَرَرْتُ بِهِٰذَيْنِ الطَّوِيْلِ وَالْقَصِيْرِ</قول>
   </مقطع>
    <مقطع هوية='٩١٣٨٤'>وَأَنْتَ تُرِيْدُ أَنْ تَجْعَلَهُ مِنَ الِاسْمِ الْأَوَّلِ بِمَنْزِلَةِ  <حرف>هِٰذَا الرَّجُلُ</حرف>
   </مقطع>
    <مقطع هوية='٣٠١٧٩'>وَلَا تَقُوْلُ <قول هوية='٧٤٧٧٩'>مَرَرْتُ بِهِٰذَا ذِي الْمَاْلِ</قول>
   </مقطع>
    <مقطع هوية='٧١٦١٥'>كَمَا قُلْتَ <قول هوية='٩٥٧٤١'>مَرَرْتُ بِزَيْدٍ ذِي الْمَاْلِ</قول>
   </مقطع>
    <مقطع هوية='٤٧٦٢٠'>وَاعْلَمْ أَنَّ صِفَاْتِ الْمَعْرِفَةِ تَجْرِي مِنَ الْمَعْرِفَةِ مَجْرَى صِفَاْتِ النَّكِرَةِ مِنَ النَّكِرَةِ</مقطع>
    <مقطع هوية='١٧٣٨٩'>وَذٰلِكَ قَوْلُكَ <قول هوية='٢١٦٦٦'>مَرَرْتُ بِأَخَوَيْكَ الطَّوِيْلَيْنِ</قول>
   </مقطع>
    <مقطع هوية='١٠٥٧٧'>فَلَيْسَ فِي هٰذَا إِلَّا الْجَرُّ</مقطع>
    <مقطع هوية='٢٤٣٧٩'>كَمَا لَيْسَ فِي قَوْلِكَ <قول هوية='٠٩٥٦٨'>مَرَرْتُ بِرَجُلٍ طَوِيْلٍ</قول> إِلَّا الْجَرُّ</مقطع>
    <مقطع هوية='٢٠٧٢٢'>وَتَقُوْلُ <قول هوية='٦٥٩٤٥'>مَرَرْتُ بِأَخَوَيْكَ الطَّوِيْلِ وَالْقَصِيْرِ</قول>
   </مقطع>
    <مقطع هوية='٢٥٧٠٧'>وَ<قول هوية='١٤١٦٣'>مَرَرْتُ بِأَخَوَيْكَ الرَّاْكِعِ وَالسَّاْجِدِ</قول>
   </مقطع>
    <مقطع هوية='٦٧٧٨٤'>فَفِي هٰذَا الْبَدَلُ وَفِي هٰذَا الصِّفَةُ وَفِيْهِ الِابْتِدَاْءُ</مقطع>
    <مقطع هوية='١٢٩٩٠'>كَمَا كَاْنَ ذٰلِكَ فِي <قول هوية='٠١٧٩٦'>مَرَرْتُ بِرَجُلَيْنِ صَاْلِحٍ وَطَاْلِحٍ</قول>
   </مقطع>
    <مقطع هوية='٢٢٧٠٨'>وَإِذَا قُلْتَ <قول هوية='٢٦١٢٦'>مَرَرْتُ بِزَيْدٍ الرَّاْكِعِ ثُمَّ السَّاْجِدِ</قول>
   </مقطع>
    <مقطع هوية='٩٣٥١٧'>أَوِ  <حرف>الرَاْكِعِ فَاْلسَّاْجِدِ</حرف>
   </مقطع>
    <مقطع هوية='٩١٣٠١'>أَوِ  <حرف>الرَّاْكِعِ لَا السَّاْجِدِ</حرف>
   </مقطع>
    <مقطع هوية='٩١٠١١'>أَوْ  <حرف>الرَّاْكِعِ أَوِ السَّاْجِدِ</حرف>
   </مقطع>
    <مقطع هوية='٨٧٦٨٧'>أَوْ  <حرف>إِمَّا الرَّاْكِعِ وَإِمَّا السَّاْجِدِ</حرف>
   </مقطع>
    <مقطع هوية='٦٥٦٨٥'>وَمَا أَشْبَهَ هٰذَا</مقطع>
    <مقطع هوية='٣١٨٤٧'>لَمْ يَكُنْ وَجْهُ كَلَاْمِهِ إِلَّا الْجَرُّ</مقطع>
    <مقطع هوية='٣١٨٢٤'>كَمَا كَاْنَ ذٰلِكَ فِي النَّكِرَةِ</مقطع>
    <مقطع هوية='١٤٥٩٢'>فَإِنْ أَدْخَلْتَ  <حرف>بَلْ</حرف>  وَ<حرف>لٰكِنْ</حرف>  جَاْزَ فِيْهِمَا مَا جَاْزَ فِي النَّكِرَةِ</مقطع>
    <مقطع هوية='١٧٢٧٠'>فَعَلَى هٰذَا فَقِسِ الْمَعْرِفَةِ</مقطع>
    <مقطع هوية='٩٤٦٣٤'>وَقَدْ مَضَى الْكَلَاْمُ فِي النَّكِرَةِ</مقطع>
    <مقطع هوية='٦٧٩١٢'>فَأَغْنَى عَنْ إِعَاْدَتِهِ فِي الْمَعْرِفَةِ</مقطع>
    <مقطع هوية='٢٠٢٦٤'>لِأَنَّ الْحُكْمَ وَاحِدٌ</مقطع>
    <مقطع هوية='٥٤٨٨٧'>وَاعْلَمْ أَنَّ كُلَّ شَيْءٍ كَاْنَ لِلنَّكِرَةِ صِفَةٌ فَهُوَ لِلْمَعْرِفَةِ خَبَرٌ</مقطع>
    <مقطع هوية='٩٣٣٨٠'>وَذٰلِكَ قَوْلُكَ  
       <قول هوية='٥٨٢٥٠'>مَرَرْتُ بِأَخَوَيْكَ قَاْئِمَيْنِ</قول>
   </مقطع>
    <مقطع هوية='٥٩٩٢٠'>فَالْـ<حرف>قَاْئِمَاْنِ</حرف>  هُنَا نَصْبٌ عَلَى حَدِّ الصِّفَّةِ فِي النَّكِرَةِ</مقطع>
    <مقطع هوية='٩٣٦٨٢'>وَتَقُوْلُ <قول هوية='٥٦٥٤٩'>مَرَرْتُ بِأَخَوَيْكَ مُسْلِمًا وَكَاْفِرًا</قول>
   </مقطع>
    <مقطع هوية='٣٩٥٦٥'>هٰذَا عَلَى مَنْ جَرَّ وَجَعَلَهُمَا صِفَةً لِلنَّكِرَةِ</مقطع>
    <مقطع هوية='١٠٤٦٧'>وَمَنْ جَعَلَهُمَا بَدَلًا مِنَ النَّكِرَةِ جَعَلَهُمَا بَدَلًا مِنَ الْمَعْرِفَةِ</مقطع>
    <مقطع هوية='١٣٤٥٧'>كَمَا قَاْلَ اللهُ عَزَّ وَجَلَّ  <آية هوية='١٥٤٥١'>لَنَسْفَعَا بِالنَّاْصِيَةِ نَاْصِيَةٍ كَاْذِبَةٍ خَاْطِئَةٍ</آية>
   </مقطع>
    <مقطع هوية='٤٣٧٧٩'>وَأَنْشَدَنَا لِبَعْضٍ الْعَرَبِ الْمَوْثُوْقِ بِهِمْ</مقطع>
    <شاهدة هوية='١٩٤٥٨'>
       <بيت>
          <مصراع>فَإِلَى ابْن أُمٍّ أُنَاْسٍ ارْحَلُ نَاْقَتِي</مصراع>
          <مصراع>عَمْرٍو فَتُبْلِغُ حَاْجَتِي أَوْ تُزْحِفُ</مصراع>
      </بيت>
       <بيت>
          <مصراع>مَلِكٍ إِذَا نَزَلَ الْوُفُوْدُ بِبَاْبِهِ</مصراع>
          <مصراع>عَرَفُوْا مَوَاْرِدَ مُزْبِدٍ لَا يُنْزَفُ</مصراع>
      </بيت>
   </شاهدة>
     
    <مقطع هوية='٠٣٥٣١'>وَمَنْ رَفَعَ فِي النَّكِرَةِ رَفَعَ فِي الْمَعْرِفَةِ</مقطع>
    <مقطع هوية='٣٩٤٨١'>قَاْلَ الْفَرَزْدَقُ</مقطع>
    <شاهدة هوية='٧٧٠٨٢'>
       <بيت>
          <مصراع>فَأَصْبَحَ فِي حَيْثُ الْتَقَيْنَا شَرِيْدُهُمْ</مصراع>
          <مصراع>طَلِيْقٌ وَمَكْتُوْفُ الْيَدَيْنِ وَمُزْعَفُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٥٥٥٩٤'>وَقَاْلَ آخَرُ [ رَجُلٌ مِنْ بَنِى قُشَيْرٍ ]</مقطع>
    <شاهدة هوية='٣٧٨٧٨'>
       <بيت>
          <مصراع>فَلَا تَجْعَلِي ضَيْفِي ضَيْفٌ مُقَرَّبٌ</مصراع>
          <مصراع>وَآخَرَ مَعْزُوْلٌ عَنْ الْبَيْتِ جَاْنِبُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٢٤٣٦٦'>وَالنَّصْبُ جَيِّدٌ كَمَا قَاْلَ [ النَّاْبِغَةُ الْجَعْدِىّ ]</مقطع>
    <شاهدة هوية='٦٠٢٠٢'>
       <بيت>
          <مصراع>وَكَاْنَتْ قُشَيْرٌ شَاْمِتًا بِصَدِيْقِهَا</مصراع>
          <مصراع>وَآخَرَ مَرْزِيًّا وَآخَرُ رَاْزِيْا</مصراع>
      </بيت>
   </شاهدة>
     
    <مقطع هوية='٨٣٥٢٠'>وَقَاْلَ الْآخَرُ وَهُوَ ذُوْ الرُّمَّةِ</مقطع>
    <شاهدة هوية='٠٠٨٦٩'>
       <بيت>
          <مصراع>تَرَى خَلْقَهَا نِصْفٌ قَنَاْة قَوِيْمَةٌ</مصراع>
          <مصراع>وَنِصْفٌ نَقًا يَرْتَجُّ أَوْ يَتَمَرْمَرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٥٤١٤٧'>وَبَعْضُهُمْ يَنْصِبُهُ عَلَى الْبَدَلِ</مقطع>
    <مقطع هوية='٠٠٧٧١'>وَإِنْ شِئْتَ كَاْنَ بِمَنْزِلَةِ <قول هوية='٢١٧٩٩'>رَأَيْتُهُ قَاْئِمًا</قول>
   </مقطع>
    <مقطع هوية='٥٦٢٧٥'>[ كَأَنَّهُ ] صَاْرَ خَبَرًا عَلَى حَدِّ مَنْ جَعَلَهُ صِفَةً لِلنَّكِرَةِ [ عَلَى الْأَوْجُهِ الثَّّلَاْثَةِ ]</مقطع>
    <مقطع هوية='٦١١٥٧'>وَاعْلَمْ أَنَّ الْمُضْمَرَ لَا يَكُوْنُ مَوْصُوْفًا</مقطع>
    <مقطع هوية='٤٤٥٨٣'>مِنْ قِبَلِ أَنَّكَ إِنَّمَا تُضْمِرُ حِيْنَ تَرَى أَنَّ الْمُحَدَّثَ قَدْ عَرَفَ مَنْ تَعْنِي</مقطع>
    <مقطع هوية='٣٢٧١٢'>وَلٰكِنْ لَهَا أَسْمَاْءُ تُعْطَفُ عَلَيْهَا</مقطع>
    <مقطع هوية='٦٨٣٨٥'>تَعُمُّ وَتُؤَكِّدُ</مقطع>
    <مقطع هوية='٥٥٦٧٦'>وَلَيْسَتْ صِفَةً</مقطع>
    <مقطع هوية='٧٠٥١٤'>لِأَنَّ الصِّفَةَ تَحْلِيَةٌ نَحْوَ<حرف>الطَّوِيْلُ</حرف>
   </مقطع>
    <مقطع هوية='٥٢٠١٣'>أَوْ قَرَاْبَةٌ نَحْوَ<حرف>أَخِيْكَ</حرف>  وَ<حرف>صَاْحِبِكَ</حرف>  وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='١٤٦٠٤'>أَوْ نَحْوَ الْأَسْمَاْءِ الْمُبْهَمَةِ</مقطع>
    <مقطع هوية='٧٢٦٦٦'>وَلَكِنَّهَا مَعْطُوْفَةٌ عَلَى الِاسْمِ</مقطع>
    <مقطع هوية='٥٣١٨٦'>تَجْرِي مَجْرَاْهُ</مقطع>
    <مقطع هوية='٠٥٣٠١'>فَلِذٰلِكَ قَاْلَ النَّحْوِيُّوْنَ صِفَةً</مقطع>
    <مقطع هوية='٣٢٨٠٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤٦٣١٩'>مَرَرْتُ بِهِمْ كُلِّهِمْ</قول>
   </مقطع>
    <مقطع هوية='٩٤٠٩٥'>أَيْ <قول هوية='١٣٣١٢'>لَمْ أَدَعْ مِنْهُمْ أَحَدًا</قول>
   </مقطع>
    <مقطع هوية='٦٧٣٨٥'>وَيَجِئُ تَوْكِيْدًا كَقَوْلِكَ <قول هوية='٢٤٣٥٦'>لَمْ يَبْقَ مِنْهُمْ مُخَبِّرٌ وَقَدْ بَقِيَ مِنْهُمْ</قول>
   </مقطع>
    <مقطع هوية='٤٩٦٨٨'>وَمِثْلُهُ أَيْضًا <قول هوية='٠١٦٩٦'>مَرَرْتُ بِهِمْ أَجْمَعِيْنَ أَكْتَعَيْنَ</قول>
   </مقطع>
    <مقطع هوية='٥٦١٢٧'>وَ<قول هوية='٣٠٣٠٠'>مَرَرْتُ بِهِمْ جُمَعَ كُتَعَ</قول>
   </مقطع>
    <مقطع هوية='٥٨٠٢٤'>وَ<قول هوية='٩٨٥٦٧'>مَرَرْتُ بِهِمْ أَجْمَعَ أَكْتَعَ</قول>
   </مقطع>
    <مقطع هوية='٥٠٤٥٥'>وَ<قول هوية='٧٣٤٩٣'>مَرَرْتُ بِهِمْ جَمِيْعِهِمْ</قول>
   </مقطع>
    <مقطع هوية='٠٤٩١١'>فَهَكَذَا هٰذَا وَمَا أَشْبَهَهُ</مقطع>
     
    <مقطع هوية='٦٢٨٠٢'>وَمِنْهُ <قول هوية='١٣٠٦٠'>مَرَرْتُ بِهِ نَفْسِهِ</قول>
   </مقطع>
    <مقطع هوية='٥٤٢٣٠'>وَمَعْنَاْهُ <قول هوية='٦٤٩٨٢'>مَرَرْتُ بِهِ بِعَيْنِهِ</قول>
   </مقطع>
    <مقطع هوية='٥١١٨٩'>وَاعْلَمْ أَنَّ الْعَلَمَ الْخَاْصَّ مِنَ الْأَسْمَاْءِ لَا يَكُوْنُ صِفَةً</مقطع>
    <مقطع هوية='٦٢٢٧٣'>لِأَنَّهُ لَيْسَ بِحِلْيَةٍ وَلَا قَرَاْبَةٍ وَلَا مُبْهَمٍ</مقطع>
    <مقطع هوية='٥١٦٢٣'>وَلَكِنَّهُ يَكُوْنُ مَعْطُوْفًا عَلَى الِاسْمِ كَعَطْفِ  <حرف>أَجْمَعِيْنَ</حرف>
   </مقطع>
    <مقطع هوية='٦٥٦٥٠'>وَهٰذَا قَوْلُ الْخَلِيْلِ رَحِمَهُ اللهُ</مقطع>
    <مقطع هوية='٤٠٩٥١'>وَزَعَمَ أَنَّهُ مِنْ أَجْلِ ذٰلِكَ قَاْلَ <قول هوية='٩٥٠٩٧'>يَا أَيُّهَا الرَّجُلُ زَيْدٌ أَقْبَلْ</قول>
   </مقطع>
    <مقطع هوية='١٣٠٤٢'>قَاْلَ لَوْ لَمْ يَكُنْ عَلَى  <حرف>الرَّجُلِ</حرف>  كَاْنَ غَيْرَ مُنَوَّنٍ</مقطع>
    <مقطع هوية='٣٥٠٦٢'>وَإِنَّمَا صَاْرَ الْمُبْهَمُ بِمَنْزِلَةِ الْمُضَاْفِ</مقطع>
    <مقطع هوية='٦٣٥٢٤'>لِأَنَّ الْمُبْهَمَ تُقَرِّبُ بِهِ شَيْئًا أَوْ تُبَاْعِدُهُ وَتُشِيْرُ إِلَيْهِ</مقطع>
    <مقطع هوية='٥٠٢٣٧'>وَمِنَ الصِّفَةِ <قول هوية='٣٦٣٤٨'>أَنْتَ الرَّجُلُ كُلُّ الرَّجُلِ</قول>
   </مقطع>
    <مقطع هوية='٩٤٨٨٨'>وَ<قول هوية='٣٤٣٣٥'>مَرَرْتُ بِالرَّجُلِ كُلِّ الرَّجُلِ</قول>
   </مقطع>
    <مقطع هوية='٢٧٦٩٩'>فَإِنَّ قُلْتَ <قول هوية='٢٤٥٢٤'>هٰذَا عَبْدُ اللهِ كُلُّ الرَّجُلِ</قول>
   </مقطع>
    <مقطع هوية='٠٣٩٣٨'>أَوْ <قول هوية='٢٥٥٥٤'>هٰذَا أَخُوْكَ كُلُّ الْرَجُلِ</قول>
   </مقطع>
    <مقطع هوية='٦١٢٦٤'>فَلَيْسَ فِي الْحُسْنِ كَاْلْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٦٩٨٠٣'>لِأَنَّكَ إِنَّمَا أَرَدْتَ بِهٰذَا الْكَلَاْمِ  <حرف>هٰذَا الرَّجُلُ الْمُبَاْلِغُ فِي الْكَمَاْلِ</حرف>
   </مقطع>
    <مقطع هوية='٠٢٠٤٤'>وَلَمْ تُرِدْ أَنْ تَجْعَلَ  <حرف>كُلَّ الرَّجُلِ</حرف>  شَيْئًا تُعَرِّفُ بِهِ مَا قَبْلَهُ</مقطع>
    <مقطع هوية='٢١٦٤٩'>وَتُبَيِّنُهُ لِلْمُخَاْطَبِ</مقطع>
    <مقطع هوية='١١٦١٣'>كَقَوْلِكَ <قول هوية='٦٥٣٣٨'>هٰذَا زَيْدٌ</قول>
   </مقطع>
    <مقطع هوية='٩٣٥٥٩'>فَإِذَا خِفْتَ أَنْ يَكُوْنَ لَمْ يَعْرِفْ قُلْتَ  <حرف>الطَّوِيْلُ</حرف>
   </مقطع>
    <مقطع هوية='١٢٢١٩'>وَلَكِنَّكَ بَنَيْتَ هٰذَا الْكَلَاْمَ عَلَى شَيْءٍ قَدْ أَثْبَتَّ مَعْرِفَتَهُ</مقطع>
    <مقطع هوية='٧٢٣٧٥'>ثُمَّ أَخْبَرْتَ أَنَّهُ مُسْتَكْمِلٌ لِلْخِصَاْلِ</مقطع>
    <مقطع هوية='٩٧٩٣٥'>وَمِثْلُ ذٰلِكَ قَوْلُكَ <قول هوية='٠٧٥١٤'>هٰذَا الْعَاْلِمُ حَقُّ الْعَاْلِمِ</قول>
   </مقطع>
    <مقطع هوية='١٥٥٦٧'>وَ<قول هوية='٦٨٦٧١'>هٰذَا الْعَاْلِمُ كُلَّ الْعَاْلِمُ</قول>
   </مقطع>
    <مقطع هوية='٩٤٣٦٨'>إِنَّمَا أَرَاْدَ أَنَّهُ مُسْتَحِقٌّ لِلْمُبَاْلَغَةِ فِي الْعِلْمِ</مقطع>
    <مقطع هوية='٦٩٥٧٢'>فَإِذَا قَاْلَ <قول هوية='١٠٩٢٤'>هٰذَا الْعَاْلِمُ جَدُّ الْعَاْلِمِ</قول>
   </مقطع>
     
    <مقطع هوية='٩٠٥٧٧'>فَإِنَّمَا يُرِيْدُ [ مَعْنَى ] <قول هوية='١٢٧٤٨'>هٰذَا عَاْلِمٌ جَدًّا</قول>
   </مقطع>
    <مقطع هوية='١٤١٥٠'>أَيْ [ هٰذَا ] قَدْ بَلَغَ الْغَاْيَةَ فِي الْعِلْمِ</مقطع>
    <مقطع هوية='١١١٥٥'>فَجَرَى هٰذَا الْبَاْبُ فِي الْأَلِفِ وَاللَّاْمِ مَجْرَاْهُ فِي النَّكِرَةِ</مقطع>
    <مقطع هوية='٠٧٨٠٧'>إِذَا قُلْتَ <قول هوية='٨٤٤٧٥'>هٰذَا رَجُلٌ كُلُّ رَجُلٍ</قول>
   </مقطع>
    <مقطع هوية='٢٩٩٢٦'>وَ<قول هوية='٠٥٣١٦'>هٰذَا عَاْلِمٌ حَقُّ عَاْلِمٍ</قول>
   </مقطع>
    <مقطع هوية='٠٢٢٤٤'>وَ<قول هوية='٨١٨٣٦'>هٰذَا عَاْلِمٌ جِدُّ عَاْلِمٍ</قول>
   </مقطع>
    <مقطع هوية='٢٦٢٩٤'>وَيُدُّلُكَ عَلَى أَنَّهُ لَا يُرِيْدُ أَنْ يُثْبِتَ بِقَوْلِهِ  <حرف>كُلُّ الرَّجُلِ</حرف> الْأَوَّلِ</مقطع>
    <مقطع هوية='٣٨٢٤٨'>أَنَّهُ لَوْ قَاْلَ <قول هوية='٥٨٤٣٣'>هٰذَا كُلُّ الرَّجُلِ</قول>
   </مقطع>
    <مقطع هوية='٤٧٦٨٨'>كَاْنَ مُسْتَغْنِيًا بِهِ</مقطع>
    <مقطع هوية='٨٨١٨٥'>وَلَكِنَّهُ ذَكَرَ الرَّجُلَ تَوْكِيْدًا</مقطع>
    <مقطع هوية='٧٧٧٩٩'>كَقَوْلِكَ <قول هوية='٠٧١٩٩'>هٰذَا رَجُلٌ رَجُلٌ صَاْلِحٌ</قول>
   </مقطع>
    <مقطع هوية='٣٩٣٦٥'>وَلَمْ يُرِدْ أَنْ يُبَيِّنَ بِقَوْلِهِ  <حرف>كُلُّ الرَّجُلِ</حرف>  مَا قَبْلَهُ</مقطع>
    <مقطع هوية='١٣٣٣٣'>كَمَا يُبَيِّنُ  <حرف>زَيْدًا</حرف>  إِذَا خَاْفَ أَنْ يَلْتَبِسَ</مقطع>
    <مقطع هوية='٨١٤٨٧'>فَلَمْ يُرِدْ ذٰلِكَ بِالْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٢٠٧٧٨'>وَإِنَّمَا هٰذَا ثَنَاْءٌ يَحْضُرُكَ عِنْدَ ذِكْرِكَ إَِيَّاْهُ</مقطع>
    <مقطع هوية='٠٢٣٨٤'>وَمِنَ الصِّفَةِ قَوْلُكَ <قول هوية='٧٨٢٥٢'>مَا يَحْسُنُ بِالرَّجُلِ مِثْلِكَ أَنْ يَفْعَلَ ذَاْكَ</قول>
   </مقطع>
    <مقطع هوية='٤٠٩٧٧'>وَ<قول هوية='٤٩٣٤٣'>مَا يَحْسُنُ بِالرَّجُلِ خَيْرٍ مِنْكَ أَنْ يَفْعَلَ ذَاْكَ</قول></مقطع>
    <مقطع هوية='٤٥١٩١'>وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللهُ أَنَّهُ إِنَّمَا جَرَّ هٰذَا عَلَى نِيَّةِ الْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٠٨٧٣٠'>وَلَكِنَّهُ مَوْضِعٌ لَا تَدْخُلُهُ الْأَلِفُ وَاللَّاْمُ</مقطع>
    <مقطع هوية='٧٤٢٧٣'>كَمَا كَاْنَ  <حرف>الْجَمَّاْءَ الْغَفِيْرَ</حرف>  مَنْصُوْبًا عَلَى نِيَّةِ إِلْقَاْءِ الْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٩٦٧٩٠'>نَحْوَ<حرف>طُرًّا</حرف>  وَ<حرف>قَاْطِبَةً</حرف>  وَالْمَصَاْدِرُ الَّتِي تُشْبِهُهَا</مقطع>
    <مقطع هوية='٩٣٩٧٠'>وَزَعَمَ رَحِمَهُ اللهُ أَنَّهُ لَا يَجُوْزُ فِي <قول هوية='٩٥١٤٠'>مَا يَحْسُنُ بِالرَّجُلِ شَبِيْهٍ بِكَ</قول>الْجَرُّ</مقطع>
    <مقطع هوية='٣٥٢٨٨'>لِأَنَّكَ تُقَدِّرُ فِيْهِ عَلَى الْأَلِفِ وَاللَّاْمِ</مقطع>
    <مقطع هوية='٤١٦٩٨'>[ وَقَاْلَ ] وَأَمَّا قَوْلُهُمْ <قول هوية='٣٥٨٦٨'>مَرَرْتُ بِغَيْرِكَ مِثْلِكَ</قول>
   </مقطع>
   <مقطع هوية='٨٧٩٨٦'>وَ<حرف>بِغَيْرِكَ خَيْرٍ مِنْكَ</حرف>
   <!-- <تقديْر>مَرَرْتُ </تقديْر><أصل>بِغَيْرِكَ خَيْرٍ مِنْكَ</أصل></قول> -->
   </مقطع>
    <مقطع هوية='٧٤٧١٢'>فَهُوَ بِمَنْزِلَةِ <قول هوية='٠٠٢٨٢'>مَرَرْتُ بِرَجُلٍ [ غَيْرِكَ ] خَيْرٍ مِنْكَ</قول></مقطع>
    <مقطع هوية='٣٩٥٥٣'>لِأَنَّ  <حرف>غَيْرَكَ</حرف>  وَ<حرف>مِثْلَكَ</حرف>  وَأَخْوَاْتِهَا يَكُنَّ نَكِرَةً</مقطع>
    <مقطع هوية='٨٦٧٣٠'>وَمَنْ جَعَلَهَا مَعْرِفَةً قَاْلَ <قول هوية='٠٠٤٠٥'>مَرَرْتُ بِمِثْلِكَ خَيْرًا مِنْكَ</قول>
   </مقطع>
    <مقطع هوية='٢٨١٠٩'>[ وَإِنْ شَاْءَ  <حرف>خَيْرٍ مِنْكَ</حرف>  عَلَى الْبَدَلِ ]</مقطع>
    <مقطع هوية='٧٦٣٠٣'>وَهٰذَا قَوْلُ يُوْنُسَ وَالْخَلِيْلِ رَحِمَهُمَا اللهُ</مقطع>
    <مقطع هوية='٥٩٠٠١'>اعْلَمْ أَنَّهُ لَا يَحْسُنُ <قول هوية='١٢٩٥١'>مَا يَحْسُنُ بِعَبْدِ اللهِ مِثْلِكَ</قول> عَلَى هٰذَا الْحَدِّ</مقطع>
    <مقطع هوية='٥٩٣٧٠'>أَلَا تَرَى أَنَّهُ لَا يَجُوْزُ <قول هوية='٣٥١٢١'>مَا يَحْسُنُ بِزَيْدٍ خَيْرٍ مِنْكَ</قول>
   </مقطع>
    <مقطع هوية='٠٤٦٤٦'>لِأَنَّهُ بِمَنْزِلَةِ  <حرف>كُلِّ الرَّجُلِ</حرف>  فِي هٰذَا</مقطع>
    <مقطع هوية='٩٦٨٦٦'>فَإِنْ قُلْتَ  <حرف>مِثْلِكَ</حرف>  وَأَنْتَ تُرِيْدُ أَنْ تَجْعَلَهُ الْمَعْرُوْفَ بِشَبَهِهِ جَاْزَ</مقطع>
    <مقطع هوية='٣٣٧٢٢'>وَصَاْرَ بِمَنْزِلَةِ  <حرف>أَخِيْكَ</حرف>
   </مقطع>
    <مقطع هوية='٣٢٤٢٠'>وَلَا يَجُوْزُ فِي  <حرف>خَيْرٍ مِنْكَ</حرف>
   </مقطع>
    <مقطع هوية='١٢١٦٦'>لِأَنَّهُ نَكِرَةٌ فَلَا تُثْبِتُ بِهِ الْمَعْرِفَةَ</مقطع>
    <مقطع هوية='٣١١٥٦'>وَلَمْ يُرِدْ فِي قَوْلِهِ <قول هوية='٤٦٨٧٦'>مَا يَحْسُنُ بِالرَّجُلِ خَيْرٍ مِنْكَ</قول>
   </مقطع>
    <مقطع هوية='٨٩٠٢٦'>أَنْ يُثْبِتَ لَهُ شَيْئًا بِعَيْنِهِ ثُمَّ يُعَرِّفُهُ بِهِ إِذَا خَاْفَ الْتِبَاْسًا</مقطع>
    <مقطع هوية='٥٥٣٢٨'>وَاعْلَمْ أَنَّ الْمَنْصُوْبَ وَالْمَرْفُوْعَ يَجْرِي مَعْرِفَتُهُمَا وَنَكِرَتُهُمَا فِي جَمِيْعِ الْأَشْيَاْءِ كَاْلْمَجْرُوْرِ</مقطع>

