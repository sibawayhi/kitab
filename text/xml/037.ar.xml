<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨٢"
     درنبورج="١-٧٠"
     البكاء="١-٢٣٧"
     هارون="١-١٦٤"
     يعقوب="١-٢١٨"
     رقم="٣٧">
  <عنوان>
    <مقطع هوية='٧٠٢٠٢'>هٰذَا بَاْبٌ مِنِ اسْمِ الْفَاْعِلِ</مقطع>
    <مقطع هوية='٩٠٥٥٧'>الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ في الْمَفْعُوْلِ في الْمَعْنَى</مقطع>
    <مقطع هوية='٧٧٤٢٢'>فَإِذَا أَرَدْتَ فِيْهِ مِنَ الْمَعْنَى مَا أَرَدْتَ في <حرف>يَفْعَلُ</حرف> كَاْنَ نَكِرَةً مِنَوَّنًا</مقطع>
  </عنوان>
  <مقطع هوية='٢٦١٨٩'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٧٦٩٤٥'><قول هوية='٦٣٧٩٢'>هٰذَا ضَاْرِبٌ زَيْدًا غَدًا</قول></مقطع>
  <مقطع هوية='٥٦١٧٠'>فَمَعْنَاْهُ وَعَمَلُهُ مِثْلُ</مقطع>
  <مقطع هوية='٠٨٣٨٤'><قول هوية='٧٦٧٤٨'>هٰذَا يَضْرِبُ زَيْدًا غَدًا</قول></مقطع>
  <مقطع هوية='٥٨٩٠٢'>فَإِذَا حَدَّثْتَ عَنِ فِعْلٍ فِي حِيْنِ وُقُوْعِهِ غَيْرِ مُنْقَطِعٍ</مقطع>
  <مقطع هوية='٨٦٠٢٤'>كَاْنَ كَذٰلِكَ وَتَقُوْلُ</مقطع>
  <مقطع هوية='١١٩١٣'>
    <قول هوية='٦٣١٣٣'>هٰذَا ضَاْرِبٌ عَبْدَ اللهِ السَّاْعَةَ</قول>
  </مقطع>
  <مقطع هوية='٧٦١١٧'>فَمَعْنَاْهُ وَعَمَلُهُ مِثْلُ</مقطع>
  <مقطع هوية='٩٧٠٥٤'>
    <قول هوية='٣٠٠٣٦'>هٰذَا يَضْرِبُ زَيْدًا السَّاْعَةَ</قول>
  </مقطع>
  <مقطع هوية='٣٨٧١٥'>وَ<قول هوية='٧٩٧١٦'>كَاْنَ زَيْدٌ ضَاْرِبًا أَبَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٨٨٢٢٤'>فَإِنَّمَا تُحَدِّثُ أَيَضًا عَنِ اتِّصَاْلِ فِعْلٍ فِي حَاْلِ وُقُوْعِهِ</مقطع>
  <مقطع هوية='٥٩٦١٣'>وَ<قول هوية='٧٠٦٠٤'>كَاْنَ مُوَاْفِقًا زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٣٢٠٤٣'>فَمَعْنَاْهُ وَعَمَلُهُ كَقَوْلِكَ</مقطع>
  <مقطع هوية='٦٦٢٦٧'>
    <قول هوية='١٨٥٢٨'>كَاْنَ يَضْرِبُ أَبَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٥٨٢٨٥'>وَ<قول هوية='٣٧٠٢٦'>
  <تقدير>كَاْنَ</تقدير> يُوَاْفِقُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٨٦٩٠٣'>فَهٰذَا جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ فِي الْعَمَلِ وَالْمَعْنَى مُنَوَّنًا</مقطع>
  <مقطع هوية='٥١٠٨٣'>وَمِمَّا جَاْءَ فِي الشِّعْرِ مُنَوَّنًا مِنْ هٰذَا الْبَاْبِ قَوْلُهُ</مقطع>
  <شاهدة هوية='٩٠٤٩٨'>
    <بيت>
      <مصراع>إِنِّي بِحَبْلِكِ <ثبات>وَاْصِلٌ</ثبات> حَبْلِي</مصراع>
      <مصراع>وَبِرِيْشِ نَبْلِكِ <ثبات>رَاْئِشٌ</ثبات> نَبْلِي</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨١٣٣٤'>وَقَاْلَ <شاعر>عُمَرُ بِنُ أَبِي رَبِيْعَةَ</شاعر></مقطع>
  <شاهدة هوية='٣٨٢٥٦' شاعر="عُمَرُ بِنُ أَبِي رَبِيْعَةَ">
    <بيت>
      <مصراع>وَمِنْ <ثبات>مَاْلِئٍ</ثبات> عَيْنَيْهِ مِنْ شَيْءٍ غَيْرِهِ</مصراع>
      <مصراع>إِذَا رَاْحَ نَحْوَ الْجَمْرَةِ الْبِيْضُ كَاْلدُّمَى</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٨٨٩٨'>وَقَاْلَ <شاعر>زُهَيْرٌ</شاعر></مقطع>
  <شاهدة هوية='٢٣١٧٠' شاعر="زُهَيْرٌ">
    <بيت>
      <مصراع>بَدَا لِي أَنِّي لَسْتُ مُدْرِكَ مَا مَضَى</مصراع>
      <مصراع>وَلَا <ثبات>سَاْبِقًا</ثبات> شَيْئًا إِذَا كَاْنَ جَاْئِيًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٤٣٥٣'>وَقَاْلَ <شاعر>الأَخْوَصُ الرِّيَاْحِيُّ</شاعر></مقطع>
  <شاهدة هوية='٧٩٩٩١' شاعر="الأَخْوَصُ الرِّيَاْحِيُّ">
    <بيت>
      <مصراع>مَشَاْئِيْمُ لَيْسُوْا <ثبات>مُصْلِحِيْنَ</ثبات> عَشِيْرةً</مصراع>
      <مصراع>وَلَا نَاْعِبًا إِلَّا بِبَيْنٍ غُرَاْبُهَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٢٦٤٦٣'>وَاعْلَمْ أَنَّ الْعَرَبَ يَسْتَخِفُّوْنَ فَيَحْذِفُوْنَ التَّنْوِيْنَ وَالنُّوْنَ</مقطع>
  <مقطع هوية='٧٣٤٨٤'>وَلَا يَتَغَيَّرُ مِنَ الْمَعْنَى شَيْءٌ</مقطع>
  <مقطع هوية='١٠٤٠٨'>وَيَنْجَرُّ الْمَفْعُوْلُ لِكَفِّ التَّنْوِيْنِ مِنَ الِاسْمِ</مقطع>
  <مقطع هوية='٣٨٥٢٣'>فَصَاْرَ عَمَلُهُ فِيْهِ الْجَرَّ</مقطع>
  <مقطع هوية='٦٥٨٦٦'>وَدَخَلَ فِي الِاسْمِ مُعَاْقِبًا لِلَتَّنْوِيْنِ</مقطع>
  <مقطع هوية='٤٠٤٤٥'>فَجَرَىَ مَجْرَى <حرف>غُلَاْمِ عَبْدِ اللهِ</حرف> فِي اللَّفْظِ</مقطع>
  <مقطع هوية='٩٥٩٣٩'>لِأَنَّهُ اسْمٌ وَإِنْ كَاْنَ لَيْسَ مِثْلَهُ فِي الْمَعْنَى وَالْعَمَلِ</مقطع>
  <مقطع هوية='٧٣٨٢٠'>وَلَيْسَ يُغَيِّرُ كَفُّ التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٥٥٤٧٧'>إِذَا حَذَفْتَهُ مُسْتَخِفًّا</مقطع>
  <مقطع هوية='٥٣٠٢٧'>شَيْئًا مِنَ الْمَعْنَى</مقطع>
  <مقطع هوية='٣١٨٤٣'>وَلَا يَجْعَلُهُ مَعَرِفَةً</مقطع>
  <مقطع هوية='٩٩٠٢١'>فَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='٦٦٥٤١'>
    <آية هوية='٨٩٢٦٦' سورة="٣" آية="١٨٥">كُلُّ نَفْسٍ ذَاْئِقَةُ الْمَوْتِ</آية>
  </مقطع>
  <مقطع هوية='٧٥٦٣٠'>وَ<آية هوية='٤٢٣٢٦' سورة="٥٤" آية="٢٧">إِنَّا مُرْسِلُوْا النَّاْقَةِ</آية>
  </مقطع>
  <مقطع هوية='٩٣٦٠٨'>وَ<آية هوية='٣٥٥٥٢' سورة="٣٢" آية="١٢">
  وَلَوْ تَرَى إِذِ الْمُجْرِمُوْنَ نَاْكِسُوْ رُءُوْسِهِمْ</آية>
  </مقطع>
  <مقطع هوية='٨٣٥٠٦'>وَ<آية هوية='٣٦٨٩٩' سورة="٥" آية="١">
  غَيْرَ مُحِلِّي الصَّيْدِ</آية>
  </مقطع>
  <مقطع هوية='٠٧٥٤٧'>فَالْمَعْنَى مَعْنَى</مقطع>
  <مقطع هوية='٧٦٦٠٧'>
    <آية هوية='٤٣١٦٧' سورة="٥" آية="٢">
    وَلَا ءَآمِّيْنَ الْبَيْتَ الْحَرَاْمَ</آية>
  </مقطع>
  <مقطع هوية='٨٩٩٣٧'>وَيَزِيْدُ هٰذَا عِنْدَكَ بَيَاْنًا قَوْلُهُ تَعَاْلَى جَدُّهُ</مقطع>
  <مقطع هوية='٤٦٤٤٩'>
    <آية هوية='٨٣٨٣٣' سورة="٥" آية="٩٥">هَدْيَۢا بَــٰلِغَ الْكَعْبَةِ</آية>
  </مقطع>
  <مقطع هوية='٣٣٩٥٤'>وَ<آية هوية='٠١٢١٦' سورة="٤٦" آية="٢٤">
  عَاْرِضٌ مُّمْطِرُنَا</آية>
  </مقطع>
  <مقطع هوية='٠٧٤٤٦'>فَلَوْ لَمْ يَكُنْ هٰذَا فِي مَعْنَى النَّكِرَةِ وَالتَّنْوِيْنِ</مقطع>
  <مقطع هوية='٠٨٩٣٩'>لَمْ تُوْصَفْ بِهِ النَّكِرَةُ</مقطع>
  <مقطع هوية='٠٨٠٢١'>وَسَتَرَاْهُ مُفَصَّلَا أَيْضًا فِي بِاْبِهِ</مقطع>
  <مقطع هوية='٥١٣٧٤'>مَعَ غَيْرِ هٰذَا مِنَ الْحُجَجِ</مقطع>
  <مقطع هوية='١٥٧٤٣'>إِنْ شَاْءَ اللهُ</مقطع>
  <مقطع هوية='٤٨١٢٠'>وَقَاْلَ <سند>الْخَلِيْلِ</سند>
  <قول هوية='٢٩٤٥١'>هُوَ كَاْئِنُ أَخِيْكَ</قول> عَلَى الِاسْتِخْفَاْفِ</مقطع>
  <مقطع هوية='٢٠٩٣٢'>وَالْمَعْنَى <قول هوية='٦٣٩٤٥'>هُوَ كَاْئِنٌ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٠٢٣٢٥'>وَمِمَّا جَاْءَ فِي الشِّعْرِ غَيْرُ مُنَوَّنٍ قَوْلُ <شاعر>الْفَرَزْدَقِ</شاعر></مقطع>
  <شاهدة هوية='٦٩٣٣١' شاعر="الْفَرَزْدَقُ">
    <بيت>
      <مصراع>أَتَاْنِي عَلَى الْقَعْسَاْءِ <ثبات>عَاْدِلَ وَطْبِهِ</ثبات></مصراع>
      <مصراع>بِرِجْلَيْ لَئِيْمٍ وَآسْتِ عَبْدٍ تُعاْدِلُهُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧١٧٤٠'>يُرِيْدُ <حرف>عَاْدِلًا وَطْبَهُ</حرف>
  </مقطع>

  <مقطع هوية='٨٧٧٨٠'>وَقَاْلَ <شاعر>الزِّبْرِقَاْنُ بْنُ بَدْرٍ</شاعر></مقطع>
  <شاهدة هوية='٩٤٠٨٧' شاعر="الزِّبْرِقَاْنُ بْنُ بَدْرٍ">
    <بيت>
      <مصراع><ثبات>مُسْتَحْقِبِي حَلَقِ الْمَاْذِيِّ</ثبات> يَحْفِزُهُ</مصراع>
      <مصراع>بِالْمَشْرَفِيِّ وَغَاْبٌ فَوْقَهُ حَصِد</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٦٧٤٣'>وَقَاْلَ <شاعر>السُّلَيْكُ بْنُ السُّلَكَةِ</شاعر></مقطع>
  <شاهدة هوية='٥٦٥٩٧' شاعر="السُّلَيْكُ بْنُ السُّلَكَةِ">
    <بيت>
      <مصراع>تَرَاْهَا مِنْ يَبِيْسِ الْمَاْءِ شُهْبًا</مصراع>
      <مصراع><ثبات>مُخَاْلِطَ دِرَّةٍ</ثبات> مِنْهَا غِرَاْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٥٢٦٩'>يُرِيْدُ عَرَقَ الْخَيْلِ</مقطع>

  <مقطع هوية='٤٨٧٠٧'>وَمِمَّا يَزِيْدُ هٰذَا الْبَاْبَ إِيَضَاْحًا</مقطع>
  <مقطع هوية='٥٧٢٤٧'>أَنَّهُ عَلَى مَعْنَى الْمُنَوَّنِ</مقطع>
  <مقطع هوية='٨٨٠٦٩'>قَوْلُ <شاعر>النَّاْبِغَةِ</شاعر></مقطع>
  <شاهدة هوية='٠٢٤٩٧' شاعر="النَّاْبِغَةُ">
    <بيت>
      <مصراع>اُحْكُمْ كَحُكْمِ فَتَاْةِ الْحَىِّ إِذْ نَظَرَتْ</مصراع>
      <مصراع>إِلَى حَمَاْمٍ شِرَاْعٍ <ثبات>وَاْرِدِ الثَّمَدِ</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٨٤٦٤'>فَوَصَفَ بِهِ النَّكِرَةَ</مقطع>

  <مقطع هوية='٣٦٤٩٤'>وَقَاْلَ <شاعر>المَّرَاْرُ الْأَسَدِىُّ</شاعر></مقطع>
  <شاهدة هوية='٣٨١٠٤' شاعر="المَّرَاْرُ الْأَسَدِىُّ">
    <بيت>
      <مصراع>سَلَّ الْهُمُوْمَ بِكُلِّ <ثبات>مُعْطِي رَأْسِهِ</ثبات></مصراع>
      <مصراع>نَاْجٍ مُخَاْلِطِ صُهْبَةٍ مُتَعَيِّسٍ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٥٢٥٥'>فَهُوَ عَلَى الْمَعْنَى لَا عَلَى الْأَصْلِ</مقطع>
  <مقطع هوية='٢٩٤٢٩'>وَالْأَصْلُ التَّنْوِيْنُ</مقطع>
  <مقطع هوية='٣٩١٠٣'>لِأَنَّ هٰذَا الْمَوْضِعَ لَا يَقَعُ فِيْهِ مَعْرِفَةٌ</مقطع>
  <مقطع هوية='٩٦٦٥٦'>وَلَوْ كَاْنَ الْأَصْلُ هٰهُنَا تَرْكَ التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٠٦١٦٨'>لَمَا دَخَلَهُ التَّنْوِيْنُ</مقطع>
  <مقطع هوية='٢٥٨١٢'>وَلَا كَاْنَ ذٰلِكَ نَكِرَةً</مقطع>
  <مقطع هوية='٥١٣٥٣'>وَذٰلِكَ أَنَّهُ لَا يَجْرِي مَجْرَى الْمُضَاْرِعِ</مقطع>
  <مقطع هوية='٤٦٦٤٠'>فِيْمَا ذَكَرْتُ لَكِ</مقطع>
  <مقطع هوية='٧٣٠٤٧'>وَزَعَمَ <سند>عِيْسَى</سند>
  أَنَّ بَعْضَ الْعَرَبِ يُنْشِدُ هٰذَا الْبَيْتَ لِـ<شاعر>ـأَبِي الْأَسْوَدِ الدُّؤَلِيِّ</شاعر></مقطع>
  <شاهدة هوية='٥٩٨٧٤' شاعر="أَبُو الْأَسْوَدِ الدُّؤَلِيُّ">
    <بيت>
      <مصراع>فَأَلْفَيْتُهُ غَيْرَ مُسْتَعْتِبٍ</مصراع>
      <مصراع>وَلَا <ثبات>ذَاْكِرِ اللهَ</ثبات> إِلَّ قَلِيْلا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٢٣٥٧'>لَمْ يَحْذِفِ التَّنْوِيْنَ اسْتِخْفَاْفًا لِيُعَاْقِبَ الْمَجْرُوْرَ</مقطع>
  <مقطع هوية='١٥٥٤١'>وَلَكِنَّهُ حَذَفَهُ لِالْتِقَاْءِ السَّاْكِنَيْنِ</مقطع>
  <مقطع هوية='٤٠٠٨٦'>كَمَا قَاْلَ <قول هوية='٤٣٤٦٤'>رَمَى الْقَوْمُ</قول>
  </مقطع>
  <مقطع هوية='٩٩٩٩١'>وَهٰذَا اضْطِرَاْرٌ وَهُوَ مُشَبَّهٌ بِذٰلِكَ الَّذِي ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٧٨٨٦٥'>وَتَقُوْلُ فِي هٰذَا بَاْبِ <قول هوية='٤٢١٢٠'>هٰذَا ضَاْرِبُ زَيْدٍ وَعَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٨٦٤٧٣'>إِذَا أَشْرَكْتَ بَيْنَ الْآخِرِ وَالْأَوَّلِ فِي الْجَاْرِّ</مقطع>
  <مقطع هوية='٣٢٨٠١'>لِأَنَّهُ لَيْسَ فِي الْعَرَبِيَّةِ شَيْءٌ يَعْمَلُ فِي حَرْفٍ فَيَمْتَنِعُ أَنْ يُشْرَكَ بَيْنَهُ وَبَيْنَ مِثْلِهِ</مقطع>
  <مقطع هوية='٩٣٨٩٥'>وَإِنْ شِئْتَ نَصَبْتَ عَلَى الْمَعْنَى وَتُضْمِرُ لَهُ نَاْصِبًا</مقطع>
  <مقطع هوية='١٥٦٩٩'>فَتَقُوْلُ <قول هوية='١١١٢٥'>هٰذَا ضَاْرِبُ زَيْدٍ وَعَمْرًا</قول>
  </مقطع>
  <مقطع هوية='١٣١٧٧'>كَأَنَّهُ قَاْلَ <قول هوية='٩١٣٩٥'>
  <تقدير>هٰذَا ضَاْرِبُ زَيْدٍ</تقدير> وَيَضْرِبُ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٨٦٦٠٩'>أَوْ <قول هوية='٦٨٤٦٥'>
  <تقدير>هٰذَا ضَاْرِبُ زَيْدٍ</تقدير> وَضَاْرِبٌ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٤١٨٩٩'>وَمِمَّا جَاْءَ عَلَى الْمَعْنَى قَوْلُ جَرِيْرٍ</مقطع>
  <شاهدة هوية='٥٢٤٣٨'>
    <بيت>
      <مصراع>جِئْنِي بِمِثْلِ بَنِي بَدْرٍ لِقَوْمِهِمْ</مصراع>
      <مصراع>أَوْ مِثْلَ أُسْرَةِ مَنْظُوْرِ بْنِ سَيَّاْرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩١٠٩٥'>وَقَاْلَ كَعْبُ بْنُ جُعَيْلٍ التَغْلَبِيِّ</مقطع>
  <شاهدة هوية='٣٩٢٦٤'>
    <بيت>
      <مصراع>أَعِنِّي بِخَوَاْرِ الْعِنَاْنِ تَخَاْلُهُ</مصراع>
      <مصراع>إِذَا رَاْحَ يَرْدَى بِالْمُدَجَّجِ أحْرَدَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَأَبْيَضَ مَصْقُوْلَ السِّطَاْمِ مُهَنَّدًا</مصراع>
      <مصراع>وَذَا حَلَقٍ مِنْ نَسْجِ دَاْوُدَ مُسْرَدَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨١١٠٦'>فَحَمَلَهُ عَلَى الْمَعْنَى</مقطع>
  <مقطع هوية='٣٤٩٩٠'>كَأَنَّهُ قَاْلَ <قول هوية='٧٧٤٠٤'>وَأَعْطِنِي أَبْيَضَ مَصْقُوْلَ السِّطَاْمِ</قول>
  </مقطع>
  <مقطع هوية='٣٥٧٣٢'>وَقَاْلَ <قول هوية='١٣٢٢٥'>هَاْتِ مِثْلَ أُسْرَةِ مَنْظُوْرِ بْنِ سَيَّاْرٍ</قول>
  </مقطع>
  <مقطع هوية='٨٦٠٥٤'>وَالنَّصْبُ فِي الْأَوَّلِ أَقْوَى وَأَحْسَنُ</مقطع>
  <مقطع هوية='٦٢٥٤٠'>لِأَنَّكَ أَدْخَلْتَ الْجَرَّ عَلَى الْحَرْفِ النَّاْصِبِ</مقطع>
  <مقطع هوية='٤٨٩٩٧'>وَلَمْ تَجِئْ هٰهُنَا إِلَّا بِمَا أَصْلُهُ الْجَرُّ</مقطع>
  <مقطع هوية='٧٥٦٥١'>وَلَمْ تُدْخِلْهُ عَلَى نَاْصِبٍ وَلَا رَاْفِعٍ</مقطع>
  <مقطع هوية='٣٥١١٠'>وَهُوَ عَلَى ذٰلِكَ عَرَبِىٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='١٢٤٣٩'>وَالْجّرُ أَجْوَدُ</مقطع>
  <مقطع هوية='٤٩٢٤٦'>وَقَاْلَ رَجُلٌ مِنَ قَيْسٍ عَيْلَاْنَ</مقطع>
  <شاهدة هوية='٩٢٢٤٣'>
    <بيت>
      <مصراع>بَيْنَا نَحْنُ نَطْلُبُهُ أَتَاْنَا</مصراع>
      <مصراع>مُعَلِّقَ وَفْضَةٍ وَزِنَاْدَ رَاْعِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٢٢٩٩'>وَزَعَمَ عِيْسَى أَنَّهُمْ يُنْشِدُوْنَ هٰذَا الْبَيْتَ</مقطع>
  <شاهدة هوية='٣٢٢٧٣'>
    <بيت>
      <مصراع>هَلْ أَنْتَ بَاْعِثُ دِيْنَاْرٍ لِحَاْجَتِنَا</مصراع>
      <مصراع>أَوْ عَبْدَ رَبٍّ أَخَا عَوْنِ بْنِ مِخْرَاْقِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١١٧٣٨'>فَإِذَا أَخْبَرَ أَنَّ الْفِعْلَ قَدْ وَقَعَ وَانْقَطَعَ</مقطع>
  <مقطع هوية='١٢٥٥٨'>فَهُوَ بِغَيْرِ تَنْوِيْنٍ أَلْبَتَّةَ</مقطع>
  <مقطع هوية='٠٤٣١٠'>لِأَنَّهُ إِنَّمَا أُجْرِيَ مُجْرَى الْفِعْلِ الْمُضَاْرِعِ لَهُ</مقطع>
  <مقطع هوية='٦٨٥٣٣'>كَمَا أَشْبَهَهُ الْفِعْلُ الْمُضَاْرِعُ فِي الْإِعْرَاْبِ</مقطع>
  <مقطع هوية='٩٤٩٢١'>فَكُلُّ وَاْحِدٍ مِنْهُمَا دَاْخِلٌ عَلَى صَاْحِبِهِ</مقطع>
  <مقطع هوية='١٤٢٨٧'>فَلَمَّا أَرَاْدَ سِوَى ذٰلِكَ الْمَعْنَى</مقطع>
  <مقطع هوية='٥٥٧٠٩'>جَرَى مَجْرَى الْأَسْمَاْءِ الَّتِي مِنْ غَيْرِ ذٰلِكَ الْفِعْلِ</مقطع>
  <مقطع هوية='٧٥٠٨٥'>لِأَنَّهُ إِنَّمَا شُبِّهَ بِمَا ضَاْرَعَهُ مِنَ الْفَعْلِ</مقطع>
  <مقطع هوية='٥٩٩٥٥'>كَمَا شُبِّهَ بِهِ فِي الْإِعْرَاْبِ</مقطع>
  <مقطع هوية='٩٢٦٦٨'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤٣٥١٧'>هٰذَا ضَاْرِبُ عَبْدِ اللهِ وَأَخِيْهِ</قول>
  </مقطع>
  <مقطع هوية='٧١١٩٥'>وَجْهُ الْكَلَاْمِ وَحَدُّهُ الْجَرُّ</مقطع>
  <مقطع هوية='٧٦٥٩٦'>لِأَنَّهُ لَيْسَ مَوْضِعًا لِلتَّنْوِيْنِ</مقطع>
  <مقطع هوية='٨٠٦٤٩'>وَكَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='١١٢٣٣'>
    <قول هوية='١٣٧٧٩'>هٰذَا ضَاْرِبُ زْيَدٍ فِيْهَا وَأَخِيْهِ</قول>
  </مقطع>
  <مقطع هوية='٠٣٠٣٩'>وَ<قول هوية='٨٧٠٧٧'>هٰذَا قَاْتِلُ عَمْرٍو أَمْسِ وَعَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٢١٤٨٢'>وَ<قول هوية='٦٠٦٩٨'>هٰذَا ضَاْرِبُ عَبْدِ اللهِ ضَرْبًا شَدِيْدًا وَعَمْرُوٍ</قول>
  </مقطع>
  <مقطع هوية='١٣٥٦٩'>وَلَوْ قُلْتَ <قول هوية='٤٦٢٨٦'>هٰذَا ضَاْرِبُ عَبْدِ اللهِ وَزَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٨٠٧٧١'>جَاْزَ عَلَى إِضْمَاْرِ فِعْلٍ أَيْ <حرف>وَضَرَبَ زَيْدًا</حرف>
  </مقطع>
  <مقطع هوية='٨٦٢٨٧'>وَإِنَّمَا جَاْزَ هٰذَا الْإِضْمَاْرُ</مقطع>
  <مقطع هوية='٥٨١٥٦'>لِأَنَّ مَعْنَى الْحَدِيْثِ فَىِ قَوْلِكَ <قول هوية='٢٦٢٨٠'>هٰذَا ضَاْرِبُ زَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٣١٩١٩'>
    <قول هوية='١٩٢٢١'>هٰذَا ضَرَبَ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٣٠٧٠٤'>وَإِنْ كَاْنَ لَا يَعْمَلُ عَمَلَهُ</مقطع>
  <مقطع هوية='٤٥١٨٠'>فَحُمِلَ عَلَى الْمَعْنَى</مقطع>
  <مقطع هوية='٦٥١٥٤'>كَمَا قَاْلَ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع هوية='٦٤٥٢٢'>
    <آية هوية='٩١٤٣٨' سورة="٥٦" آية="٢١">
    وَلَحْمِ طَيْرٍ مِّمَّا يَشْتَهُوْنَ<نهاية آية="٢١"/> وَحُوْرٌ عِيْنٌ<نهاية آية="٢٢"/></آية>
  </مقطع>
  <مقطع هوية='٩٥١٣١'>لَمَّا كَاْنَ الْمَعْنَى فِي الْحَدِيْثِ عَلَى قَوْلِهِ <حرف>لَهُمْ فِيْها</حرف>
  </مقطع>
  <مقطع هوية='٢٢١١٥'>حَمَلَهُ عَلَى شَيْءٍ لَا يَنْقُضُ الْأَوَّلَ فِي الْمَعْنَى</مقطع>
  <مقطع هوية='٧٦٥٢٩'>وَقَدْ قَرَأَهُ الْحَسَنُ</مقطع>
  <مقطع هوية='٣١٣٨٢'>وَمِثْلُهُ قَوْلُ الشَّاْعِرِ</مقطع>
  <شاهدة هوية='٩٢٥١٩'>
    <بيت>
      <مصراع>يَهْدِي الْخَمِيْسَ نِجَاْدًا فِي مَطَاْلِعِهَا</مصراع>
      <مصراع>أَمَّا الْمِصَاْعَ وَإِمَّا ضَرْبَةٌ رُغُبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٦٥١٢'>حَمَلَهُ عَلَى شَيْءٍ لَوْ كَاْنَ عَلَيْهِ الْأَوَّلُ لَمْ يَنْقُضْ الْمَعْنَى</مقطع>
  <مقطع هوية='٠٩٣٥٩'>وَمِثْلُهُ قَوْلُ كَعْبِ بْنِ زُهَيْرٍ</مقطع>
  <شاهدة هوية='٢٢٨٠٤'>
    <بيت>
      <مصراع>فَلَمْ يَجِدَا إِلَّا مُنَاْخَ مَطِيَّةٍ</مصراع>
      <مصراع>تَجَاْفَى بِهَا زَوْرٌ نَبِيْلٌ وَكَلْكَلُ</مصراع>
    </بيت>
    <بيت>
      <مصراع>ومَفْحَصَهَا عَنْهَا الحَصَىَ بِجِرَاْنِهَا</مصراع>
      <مصراع>وَمَثْنَى نَوَاْجٍ لَمْ يَخُنْهُنَّ مَفْصِلُ</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَسُمْرٌ ظِمَاْءٌ وَاتَرَتْهُنَّ بَعْدَمَا</مصراع>
      <مصراع>مَضَتْ هَجْعَةٌ مِنْ آخِرِ اللَّيْلِ ذُبَّلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٧٥٩١'>كَأَنَّهُ قَاْلَ <قول هوية='١٨٢٢٩'>وَثَمَّ سُمْرٌ ظِمَاْءٌ</قول>
  </مقطع>
  <مقطع هوية='٩٧١٨٣'>وَقَاْلَ</مقطع>
  <شاهدة هوية='٨٦٨١٠'>
    <بيت>
      <مصراع>بَاْدَتْ وَغَيَّرَ آيَهُنَّ مَعَ الْبِلَى</مصراع>
      <مصراع>إِلَّا رَوَاْكِدَ جَمْرُهُنَّ هَبَاْءُ</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَمُشَجَّجٌ أَمَّا سَوَاْءُ قَذَاْلِهِ</مصراع>
      <مصراع>فَبَدَا وَغَيَّرَ سَاْرَهُ الْمَعْزَاْءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٧٩٩٣'>لِأَنَّ قَوْلَهُ <حرف>إِلَّا رَوَاْكِدَ</حرف> هِىَ فَىِ مَعْنَى الْحَدِيْثِ <حرف>بِهَا رَوَاْكِدُ</حرف>
  </مقطع>
  <مقطع هوية='٠٧٢٣٩'>فَحَمَلَهُ عَلَى شَيْءٍ لَوْ كَاْنَ عَلَيْهِ الْأَوَّلُ لَمْ يَنْقُضْ الْحَدِيْثَ</مقطع>
  <مقطع هوية='٢٨٢٣٨'>وَالْجَرُّ فِي هٰذَا أَقْوَى</مقطع>
  <مقطع هوية='٤٩٠٣٢'>يَعْنِي <قول هوية='٩٢٩٠٩'>هٰذَا ضَاْرِبُ زَيْدٍ وَعَمْرُوٍ</قول> وَ<حرف>عَمْرًا</حرف> بِالنَّصْبِ</مقطع>
  <مقطع هوية='٢٨٣١٢'>وَقَدْ فَعَلَ لِأَنَّهُ اسْمٌ وَإِنْ كَاْنَ قَدْ جَرَى مَجْرَى الْفِعْلِ بِعَيْنِهِ</مقطع>
  <مقطع هوية='١٥٨٦٦'>وَالنَّصْبُ فِي الْفَصْلِ أَقْوَى إِذَا قُلْتَ</مقطع>
  <مقطع هوية='٨١٥٥٧'>
    <قول هوية='٢٣٢٥٨'>هٰذَا ضَاْرِبُ زْيَدٍ فِيْهَا وَعَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٥٤١٥٩'>كُلَّمَا طَاْلَ الْكَلَاْمُ كَاْنَ أَقْوَى</مقطع>
  <مقطع هوية='٣٦٣١٢'>وَذٰلِكَ أَنَّكَ لَا تَفْصِلُ بَيْنَ الْجَاْرِّ وَبَيْنَ مَا يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية='٥٦٧٤٠'>فَكَذٰلِكَ صَاْرَ هٰذَا أَقْوَى</مقطع>
  <مقطع هوية='٩٠٧٥٦'>فَمِنْ ذٰلِكَ قَوْلُهُ جَلَّ ثَنَاْؤُهُ</مقطع>
  <مقطع هوية='٧٧٥٥٠'>
    <آية هوية='٨١٠٦١' سورة="٦" آية="٩٦">وَجَعَلَ اللَّيْلِ سَكَنًا وَالشَّمْسَ وَالْقَمَرَ حُسْبَاْنًا</آية>
  </مقطع>
  <مقطع هوية='٩٤٥٩٨'>وَكَذٰلِكَ إِنْ جِئْتَ بِاْسْمِ الْفَاْعِلِ الَّذِي تَعَدَّى فَعْلُهُ إِلَى مَفْعُوْلَيْنِ</مقطع>
  <مقطع هوية='٢٤٧٢٠'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٢٧٧١٠'>
    <قول هوية='٨٨٠٣٣'>هٰذَا مُعْطِي زَيْدٍ دِرْهَمًا وَعَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٠٠٠٩٧'>إِذَا لَمْ تُجْرِهِ عَلَى الـ<حرف>دِّرْهَمِ</حرف>
  </مقطع>
  <مقطع هوية='٣٧٠٦٨'>وَالنَّصْبُ عَلَى مَا نَصَبْتَ عَلَيْهِ مَا قَبْلَهُ</مقطع>
  <مقطع هوية='٧٢٠٣٥'>وَتَقُوْلُ <قول هوية='٨٥١٨٥'>هٰذَا مُعْطِي زَيْدٍ وَعَبْدَ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٨٩٢١٣'>وَالنَّصْبُ إِذَا ذَكَرْتَ الـ<حرف>دِّرْهَمَ</حرف> أَقْوَى لِأَنَّكَ قَدْ فَصَلْتَ بَيْنَهُمَا</مقطع>
  <مقطع هوية='٥٤٣٩٩'>وَإِنْ لَمْ تُرِدْ بِالِاسْمِ الَّذِي يَتَعَدَّى فَعْلُهُ إِلَى مَفْعُوْلَيْنِ أَنْ يَكُوْنَ الْفِعْلُ قَدْ وَقَعَ</مقطع>
  <مقطع هوية='٢١٨٩٨'>أَجْرَيْتَهُ مَجْرَى الْفِعْلِ الَّذِي يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع هوية='١١٤٥٥'>فِي التَّنْوِيْنِ وَتَرْكِ التَّنْوِيْنِ وَأَنْتَ تُرِيْدُ مَعْنَاْهُ</مقطع>
  <مقطع هوية='٩٨٧١٤'>وَفِي النَّصْبِ وَالْجَرِّ وَجَمِيْعِ أَحْوَالِهِ</مقطع>
  <مقطع هوية='٦٤٩٧٤'>فَإِذَا نَوَّنْتَ فَقُلْتَ <قول هوية='٥٧٠٠٢'>هٰذَا مُعْطٍ زَيْدًا دِرْهَمًا</قول>
  </مقطع>
  <مقطع هوية='٥٤٦٩٨'>لَا تُبَاْلِ أَيَّهُمَا قَدَّمْتَ لِأَنَّهُ يَعْمَلُ عَمَلَ الْفِعْلِ</مقطع>
  <مقطع هوية='١٠٧٦٥'>وَإِنْ لَمْ تُنَوِّنْ لَمْ يَجُزْ <قول هوية='٨٦٥٨٦'>هٰذَا مُعْطِي دِرْهَمًا زَيْدٍ</قول></مقطع>
  <مقطع هوية='٨٦٢٢٨'>لِأَنَّكَ لَا تَفْصِلُ بَيْنَ الْجَاْرِّ وَالْمَجْرُوْرِ لِأَنَّهُ دَاْخِلٌ فِي الِاسْمِ</مقطع>
  <مقطع هوية='٣١٠٠٢'>فَإِذَا نَوَّنْتَ انْفَصَلَ كاْنْفِصَاْلِهِ فِي الْفِعْلِ</مقطع>
  <مقطع هوية='٢٢٣٥٣'>فَلَا يَجُوْزُ إِلَّا فِي قَوْلِهِ <قول هوية='٢٣١٨٤'>هٰذَا مُعْطِي دِرْهَمٍ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٣١٦٦٠'>كَمَا قَاْلَ تَعَاْلَى جَدُّهُ</مقطع>
  <مقطع هوية='٣١٧٢٩'>
    <آية هوية='٢٩٤٣١' سورة="١٤" آية="٤٧">فَلَا تَحْسَبَنَّ اللهَ مُخْلِفَ وَعْدِهِ رُسُلَهُ</آية>
  </مقطع>
