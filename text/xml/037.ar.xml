<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨٢"
     درنبورج="١-٧٠"
     البكاء="١-٢٣٧"
     هارون="١-١٦٤"
     يعقوب="١-٢١٨"
     رقم="٣٧">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ مِنِ اسْمِ الْفَاعِلِ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ في الْمَفْعُوْلِ في الْمَعْنَى</مقطع>
    <مقطع رقم="٢">فَإِذَا أَرَدْتَ فِيْهِ مِنَ الْمَعْنَى مَا أَرَدْتَ في <حرف>يَفْعَلُ</حرف> كَانَ نَكِرَةً مِنَوَّنًا</مقطع>
  </عنوان>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٤">
    <قول رقم="١">هٰذَا ضَارِبٌ زَيْدًا غَدًا</قول>
  </مقطع>
  <مقطع رقم="٥">فَمَعْنَاهُ وَعَمَلُهُ مِثْلُ</مقطع>
  <مقطع رقم="٦">
    <قول رقم="٢">هٰذَا يَضْرِبُ زَيْدًا غَدًا</قول>
  </مقطع>
  <مقطع رقم="٧">فَإِذَا حَدَّثْتَ عَنِ فِعْلٍ في حِيْنِ وُقُوْعِهِ غَيْرِ مُنْقَطِعٍ</مقطع>
  <مقطع رقم="٨">كَانَ كَذٰلِكَ وَتَقُوْلُ</مقطع>
  <مقطع رقم="٩">
    <قول رقم="٣">هٰذَا ضَارِبٌ عَبْدَ اللّٰهِ السَّاعَةَ</قول>
  </مقطع>
  <مقطع رقم="١٠">فَمَعْنَاهُ وَعَمَلُهُ مِثْلُ</مقطع>
  <مقطع رقم="١١">
    <قول رقم="٤">هٰذَا يَضْرِبُ زَيْدًا السَّاعَةَ</قول>
  </مقطع>
  <مقطع رقم="١٢">وَ<قول رقم="٥">كَانَ زَيْدٌ ضَارِبًا أَبَاكَ</قول>
  </مقطع>
  <مقطع رقم="١٣">فَإِنَّمَا تُحَدِّثُ أَيَضًا عَنِ اتِّصَالِ فِعْلٍ في حَالِ وُقُوْعِهِ</مقطع>
  <مقطع رقم="١٤">وَ<قول رقم="٦">كَانَ مُوَافِقًا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٥">فَمَعْنَاهُ وَعَمَلُهُ كَقَوْلِكَ</مقطع>
  <مقطع رقم="١٦">
    <قول رقم="٧">كَانَ يَضْرِبُ أَبَاكَ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَ<قول رقم="٨">
  <تقدير>كَاْنَ</تقدير> يُوَافِقُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٨">فَهٰذَا جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ في الْعَمَلِ وَالْمَعْنَى مُنَوَّنًا</مقطع>
  <مقطع رقم="١٩">وَمِمَّا جَاءَ في الشِّعْرِ مُنَوَّنًا مِنْ هٰذَا الْبَابِ قَوْلُهُ</مقطع>
  <شاهدة رقم="١" xml:id="٣٧-1">
    <بيت>
      <مصراع>إِنِّي بِحَبْلِكَ وَاصِلٌ حَبْلِي</مصراع>
      <مصراع>وَبِرِيشِ نَبْلِكَ رَائِشٌ نَبْلِي</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٠">وَقَالَ عُمَرُ بِنُ أَبِي رَبِيْعَةَ</مقطع>
  <شاهدة رقم="٢" xml:id="٣٧-2">
    <بيت>
      <مصراع>وَمِنْ مَالِئٍ عَيْنَيْهِ مِنْ شَيْءٍ غَيْرِهِ</مصراع>
      <مصراع>إِذَا رَاحَ نَحْوَ الْجَمْرَةِ الْبِيضُ كَالدُّمَى</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢١">وَقَالَ زُهَيْرُ</مقطع>
  <شاهدة رقم="٣" xml:id="٣٧-3">
    <بيت>
      <مصراع>بَدَا لِي أَنِّي لَسْتُ مُدْرِكَ مَا مَضَى</مصراع>
      <مصراع>وَلَا سَاْبِقًا شَيْئًا إِذَا كَانَ جَائِيًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٢">وَقَالَ الأَخْوَصُ الرِّيَاْحِيُّ</مقطع>
  <شاهدة رقم="٤" xml:id="٣٧-4">
    <بيت>
      <مصراع>مَشَائِيْمُ لَيْسُوْا مُصْلِحِيْنَ عَشِيْرةً</مصراع>
      <مصراع>وَلَا نَاْعِبًا إِلَّا بِبَيْنٍ غُرَابُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٣">وَاعْلَمْ أَنَّ الْعَرَبَ يَسْتَخِفُّوْنَ فَيَحْذِفُوْنَ التَّنْوِيْنَ وَالنُّوْنَ</مقطع>
  <مقطع رقم="٢٤">وَلَا يَتَغَيَّرُ مِنَ الْمَعْنَى شَيءٌ</مقطع>
  <مقطع رقم="٢٥">وَيَنْجَرُّ الْمَفْعُوْلُ لِكَفِّ التَّنْوِيْنِ مِنَ الْاسْمِ</مقطع>
  <مقطع رقم="٢٦">فَصَارَ عَمَلُهُ فِيْهِ الْجَرَّ</مقطع>
  <مقطع رقم="٢٧">وَدَخَلَ في الْاسْمِ مُعَاْقِبًا لِلَتَّنْوِيْنِ</مقطع>
  <مقطع رقم="٢٨">فَجَرَىَ مَجْرَى <حرف>غُلَامِ عَبْدِ اللّٰهِ</حرف> في اللَّفْظِ</مقطع>
  <مقطع رقم="٢٩">لِأَنَّهُ اسْمٌ وَإِنْ كَانَ لَيْسَ مِثْلَهُ في الْمَعْنَى وَالْعَمَلِ</مقطع>
  <مقطع رقم="٣٠">وَلَيْسَ يُغَيِّرُ كَفُّ التَّنْوِيْنِ إِذَا حَذَفْتَهُ مُسْتَخِفًّا شَيْئًا مِنْ الْمَعْنَى</مقطع>
  <مقطع رقم="٣١">وَلَا يَجْعَلُهُ مَعَرِفَةً</مقطع>
  <مقطع رقم="٣٢">فَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="٣٣">
    <آية سورة="٣" آية="١٨٥">كُلُّ نَفْسٍ ذَائِقَةُ الْمَوْتِ</آية>
  </مقطع>
  <مقطع رقم="٣٤">وَ<آية سورة="٤٧" آية="٢٧">إِنَّا مُرْسِلُوْا النَّاقَةِ</آية>
  </مقطع>
  <مقطع رقم="٣٥">وَ<آية سورة="٣٢" آية="١٢">لَوْ تَرَى إِذِ الْمُجْرِمُوْنَ نَاكِسُوْ رِءُسِهِمْ</آية>
  </مقطع>
  <مقطع رقم="٣٦">وَ<آية سورة="٥" آية="١">غَيْرَ مُحِلِّي الصَّيْدِ</آية>
  </مقطع>
  <مقطع رقم="٣٧">فَالْمَعْنَى مَعْنَى</مقطع>
  <مقطع رقم="٣٨">
    <آية سورة="٥" آية="٢">وَلَا ءَآمِّينَ الْبَيْتَ الْحَرَامَ</آية>
  </مقطع>
  <مقطع رقم="٣٩">وَيَزِيْدُ هٰذَا عِنْدَكَ بَيَاْنًا قَوْلُهُ تَعَاْلَى جَدُّهُ</مقطع>
  <مقطع رقم="٤٠">
    <آية سورة="٥" آية="٩٥">هَدْيَۢا بَالِغَ الْكَعْبَةِ</آية>
  </مقطع>
  <مقطع رقم="٤١">وَ<آية سورة="٤٦" آية="٢٤">عَارِضٌ مُّمْطِرُنَا</آية>
  </مقطع>
  <مقطع رقم="٤٢">فَلَوْ لَمْ يَكُنْ هٰذَا في مَعْنَى النَّكِرَةِ وَالتَّنْوِيْنِ</مقطع>
  <مقطع رقم="٤٣">لَمْ تُوْصَفْ بِهِ النَّكِرَةُ</مقطع>
  <مقطع رقم="٤٤">وَسَتَرَاهُ مُفَصَّلَا أَيْضًا في بِابِهِ</مقطع>
  <مقطع رقم="٤٥">مَعَ غَيْرِ هٰذَا مِنْ الْحُجَجِ</مقطع>
  <مقطع رقم="٤٦">إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٤٧">وَقَالَ الْخَلِيْلِ <قول رقم="٩">هُوَ كَائِنُ أَخِيْكَ</قول> عَلَى الِاسْتِخْفَافِ</مقطع>
  <مقطع رقم="٤٨">وَالْمَعْنَى <قول رقم="١٠">هُوَ كَائِنٌ أَخَاكَ</قول>
  </مقطع>
  <مقطع رقم="٤٩">وَمِمَّا جَاءَ في الشِّعْرِ غَيْرُ مُنَوَّنٍ قَوْلُ الْفَرَزْدَقِ</مقطع>
  <شاهدة رقم="٥" xml:id="٣٧-5">
    <بيت>
      <مصراع>أَتَانِي عَلَى الْقَعْسَاءِ عَادِلَ وَطَبِهُ</مصراع>
      <مصراع>بِرِجْلَيْ لَئِيمٍ وَآسْتِ عَبْدٍ تُعادِلُهُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٠">يُرِيْدُ <حرف>عَاْدِلًا وَطْبَهُ</حرف>
  </مقطع>
  <مقطع رقم="٥١">وَقَالَ الزِّبْرِقَاْنُ بْنُ بَدْرٍ</مقطع>
  <شاهدة رقم="٦" xml:id="٣٧-6">
    <بيت>
      <مصراع>مُسْتَحْقِبِي حَلَقِ الْمَاذِيَّ يَحْفِزُهُ</مصراع>
      <مصراع>بِالْمَشْرَفِيِّ وَغَابٌ فَوْقَهُ حَصِد</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٢">وَقَالَ السُّلَيْكُ بِنُ السُّلَكَةِ</مقطع>
  <شاهدة رقم="٧" xml:id="٣٧-7">
    <بيت>
      <مصراع>تَرَاهَا مِنْ يَبِيْسِ الْمَاءِ شُهْبا</مصراع>
      <مصراع>مُخَالِطَ دِرَّةٍ مِنْهَا غِرَارُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٣">يُرِيْدُ عَرَقَ الْخَيْلِ</مقطع>
  <مقطع رقم="٥٤">وَمِمَّا يَزِيْدُ هٰذَا الْبَابَ إِيَضَاحًا أَنَّهُ عَلَى مَعْنَى الْمُنَوَّنِ قَوْلُ النَّابِغَةِ</مقطع>
  <شاهدة رقم="٨" xml:id="٣٧-8">
    <بيت>
      <مصراع>اُحْكُمْ كَحُكْمِ فَتَاْةِ الْحَىِّ إِذْ نَظَرَتْ</مصراع>
      <مصراع>إِلَى حَمَامٍ شِرَاعٍ وَارِدِ الْثَّمَدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٥">فَوَصَفَ بِهِ النَّكِرَةَ</مقطع>
  <مقطع رقم="٥٦">وَقَالَ المَّرَارُ الْأَسَدِىُّ</مقطع>
  <شاهدة رقم="٩" xml:id="٣٧-9">
    <بيت>
      <مصراع>سَلَّ الْهُمُوْمَ بِكُلِّ مُعْطِي رَأْسِهِ</مصراع>
      <مصراع>نَاْجٍ مُخَاْلِطِ صُهْبَةٍ مُتَعَيِّسٍ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٧">فَهُوَ عَلَى الْمَعْنَى لَا عَلَى الْأَصْلِ وَالْأَصْلُ التَّنْوِيْنُ</مقطع>
  <مقطع رقم="٥٨">لِأَنَّ هٰذَا الْمَوْضِعَ لَا يَقَعُ فِيْهِ مَعْرِفَةٌ</مقطع>
  <مقطع رقم="٥٩">وَلَوْ كَانَ الْأَصْلُ هٰهُنَا تَرْكَ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٦٠">لَمَا دَخَلَهُ التَّنْوِيْنُ وَلَا كَانَ ذٰلِكَ نَكِرَةً</مقطع>
  <مقطع رقم="٦١">وَذٰلِكَ أَنَّهُ لَا يَجْرِي مَجْرَى الْمُضَارِعِ</مقطع>
  <مقطع رقم="٦٢">فِيْمَا ذَكَرْتُ لَكِ</مقطع>
  <مقطع رقم="٦٣">وَزَعَمَ عِيْسَى أَنَّ بَعْضَ الْعَرَبِ يُنْشِدُ هٰذَا الْبَيْتَ لِأَبِي الْأَسْوَدِ الدُّؤَلِي</مقطع>
  <شاهدة رقم="١٠" xml:id="٣٧-10">
    <بيت>
      <مصراع>فَأَلْفَيْتُهُ غَيْرَ مُسْتَعْتِبٍ</مصراع>
      <مصراع>وَلَا ذَاكِرِ الَّلَهِ إِلَا قَلِيْلا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٤">لَمْ يَحْذِفْ التَّنْوِينَ اسْتِخْفَافًا لِيُعَاقِبَ الْمَجْرُوْرَ</مقطع>
  <مقطع رقم="٦٥">وَلَكِنَّهُ حَذَفَهُ لِالْتِقَاءِ السَّاكِنَيْنِ</مقطع>
  <مقطع رقم="٦٦">كَمَا قَالَ <قول رقم="١١">رَمَى الْقَوْمُ</قول>
  </مقطع>
  <مقطع رقم="٦٧">وَهٰذَا اضْطِرَاْرٌ وَهُوَ مُشَبَّهٌ بِذٰلِكَ الَّذِي ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٦٨">وَتَقُوْلُ في هٰذَا بَاْبِ <قول رقم="١٢">هٰذَا ضَارِبُ زَيْدٍ وَعَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٦٩">إِذَا أَشْرَكْتَ بَيْنَ الْآخِرِ وَالْأَوَّلِ في الْجَارِّ</مقطع>
  <مقطع رقم="٧٠">لِأَنَّهُ لَيْسَ في الْعَرَبِيَّةِ شَيءٌ يَعْمَلُ في حَرْفٍ فَيَمْتَنِعُ أَنْ يُشْرَكَ بَيْنَهُ وَبَيْنَ مِثْلِهِ</مقطع>
  <مقطع رقم="٧١">وَإِنْ شِئْتَ نَصَبْتَ عَلَى الْمَعْنَى وَتُضْمِرُ لَهُ نَاصِبًا</مقطع>
  <مقطع رقم="٧٢">فَتَقُوْلُ <قول رقم="١٣">هٰذَا ضَارِبُ زَيْدٍ وَعَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٧٣">كَأَنَّهُ قَالَ <قول رقم="١٤">
  <تقدير>هٰذَا ضَارِبُ زَيْدٍ</تقدير> وَيَضْرِبُ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٧٤">أَوْ <قول رقم="١٥">
  <تقدير>هٰذَا ضَارِبُ زَيْدٍ</تقدير> وَضَارِبٌ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٧٥">وَمِمَّا جَاءَ عَلَى الْمَعْنَى قَوْلُ جَرِيْرٍ</مقطع>
  <شاهدة رقم="١١" xml:id="٣٧-11">
    <بيت>
      <مصراع>جِئْنِي بِمِثْلِ بَنِي بَدْرٍ لِقَوْمِهِمْ</مصراع>
