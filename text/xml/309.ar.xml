<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٣٦"
     درنبورج="٢-٣٤"
     البكاء="٤-٤٤٠"
     هارون="٣-٢٧٠"
     يعقوب="٣-٢٩٩"
     رقم="٣٠٩">

  <عنوان>
    <مقطع هوية='٤٠١١٠'>هٰذَا بَاْبُ مَا جَاْءَ مَعْدُوْلًا عَنْ حَدِّهِ مِنَ الْمُؤَنَّثِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٥٤٤١'>كَمَا جَاْءَ الْمُذَكَّرُ مَعْدُوْلًا عَنْ حَدِّهِ</مقطع>
  <مقطع هوية='٧٦٥٠٨'>نَحْوَ <حرف>فُسَقَ</حرف> وَ<حرف>لُكَعَ</حرف> وَ<حرف>عُمَرَ</حرف> وَ<حرف>زُفَرَ</حرف></مقطع>
  <مقطع هوية='١٤١٧٩'>وَهٰذَا الْمُذَكَّرُ نَظِيْرُ ذٰلِكَ الْمُؤَنَّثِ</مقطع>

  <مقطع هوية='٢٦١٠٠'>فَقَدْ يَجِيْءُ هٰذَا الْمَعْدُوْلُ اسْمًا لِلْفِعْلِ</مقطع>
  <مقطع هوية='٩٦٧٧٢'>وَاسْمًا لِلْوَصْفِ الْمُنَاْدَى الْمُؤَنَّثِ</مقطع>
  <مقطع هوية='٤٥٩٢٣'>كَمَا كَاْنَ <حرف>فُسَقُ</حرف> وَنَحْوُهُ لِلْمُذَكَّرِ</مقطع>
  <مقطع هوية='٠٢٤٥٨'>وَقَدْ يَكُوْنُ اسْمًا لِلْوَصْفِ غَيْرِ الْمُنَاْدَى وَلِلْمَصْدَرِ</مقطع>
  <مقطع هوية='٧٨٠٢٩'>وَلَا يَكُوْنُ إِلَّا مُؤَنَّثًا لِمُؤَنَّثٍ</مقطع>
  <مقطع هوية='١٣١٥٣'>وَقَدْ يَجِيْءُ مَعْدُوْلًا كَـ<حرف>عُمَرَ</حرف></مقطع>
  <مقطع هوية='٣٣٤٦٢'>لَيْسَ اسْمًا لِصِفَةٍ وَلَا فِعْلٍ وَلَا مَصْدَرٍ</مقطع>
  <مقطع هوية='٤١٠٩٨'>فَأَمَّا مَا جَاْءَ اسْمًا لِلْفِعْلِ وَصَاْرَ بِمَنْزِلَتِهِ</مقطع>

  <مقطع هوية='٢٤٧٧٧'>فَقَوْلُ الشَّاْعِرِ</مقطع>
  <شاهدة هوية='١٤٠٥٥'>
    <بيت>
      <مصراع><ثبات>مَنَاْعِهَا</ثبات> مِنْ إِبِلٍ <ثبات>مَنَاْعِهَا</ثبات></مصراع>
      <مصراع>أَلَا تَرَى الْمَوْتَ لَدَى أَرْبْاْعِهَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٦٨٧٩٧'>وَقَاْلَ أَيْضًا</مقطع>
  <شاهدة هوية='٣٨٨٧١'>
    <بيت>
      <مصراع><ثبات>تَرَاْكِهَا</ثبات> مِنْ إِبِلٍ <ثبات>تَرَاْكِهَا</ثبات></مصراع>
      <مصراع>أَلَا تَرَى الْمَوْتَ لَدَى أَوْرَاْكِهَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٦٦٠٨٧'>وَقَاْلَ <شاعر>أَبُو النَّجْمِ</شاعر></مقطع>
  <شاهدة هوية='٢٢١٩٣' شاعر="أَبُو النَّجْمِ">
    <بيت>
      <مصراع><ثبات>حَذَاْرِ</ثبات> مِنْ أَرْمَاْحِنَا <ثبات>حَذَاْرِ</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٥٥٩٠٣'>وَقَاْلَ <شاعر>رُؤْبَةُ</شاعر></مقطع>
  <شاهدة هوية='٨٠١٧٤' شاعر="رُؤْبَةُ">
    <بيت>
      <مصراع><ثبات>نَظَاْرِ</ثبات> كَيْ أَرْكَبَهَا <ثبات>نَظَاْرِ</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٠٧٧٠١'>وَيُقَاْلُ <حرف>نَزَاْلِ</حرف> أَيْ <حرف>انْزِلْ</حرف></مقطع>

  <مقطع هوية='٥٢١٠٥'>وَقَاْلَ <شاعر>زُهَيْرُ</شاعر></مقطع>
  <شاهدة هوية='٧٠٥٤٦' شاعر="زُهَيْرُ">
    <بيت>
      <مصراع>وَلَنِعْمَ حَشْوُ الدَّرْعِ أَنْتَ إِذَا</مصراع>
      <مصراع>دُعِيَتْ <ثبات>نَزَاْلِ</ثبات> وَلُجَّ فِي الذُّعْرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٣٨٣٠'> وَيُقَاْلُ لِلضَّبُعِ <حرف>دَبَاْبِ</حرف> أَيْ <حرف>دِبِّي</حرف></مقطع>

  <مقطع هوية='٧٥٦٢٣'>قَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة هوية='٨٧١٠٨'>
    <بيت>
      <مصراع><ثبات>نَعَاْءِ</ثبات> ابْنَ لَيْلَى لِلسَّمَاْحَةِ وَالنَّدَى</مصراع>
      <مصراع>وَأَيْدِي شَمَاْلٍ بَاْرِدَاْتِ الْأَنَاْمِلِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٨٣٥٤٣'>وَقَاْلَ <شاعر>جَرِيْرٌ</شاعر></مقطع>
  <شاهدة هوية='٩١٣٨٦' شاعر="جَرِيْرٌ">
    <بيت>
      <مصراع><ثبات>نَعَاْءِ</ثبات> أَبَا لَيْلَى لِكُلِّ طَمِرَّةٍ وَجَرْدَاْءَ</مصراع>
      <مصراع>مِثْلِ الْقَوْسِ سَمْحٍ حُجُوْلُهَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٠٣١٨'>فَالحَدُّ فِي جَمِيْعِ ذَا <حرف>افْعَلْ</حرف>
  وَلَكِنَّهُ مَعْدُوْلٌ عَنْ حَدِّهِ</مقطع>
  <مقطع هوية='٦٩٥٥٣'>وَحُرِّكَ آخِرُهُ لِأَنَّهُ لَا يَكُوْنُ بَعْدَ الْأَلِفِ سَاْكِنٌ</مقطع>
  <مقطع هوية='٤٩٥٧٢'>وَحُرِّكَ بِالكَسْرِ لِأَنَّ الْكَسْرَ مِمَّا يُؤَنَّثُ بِهِ</مقطع>
  <مقطع هوية='١٨٩٥٥'>تَقُوْلُ <قول هوية='٠٧٧٥٤'>إِنَّكِ ذَاْهِبَةٌ</قول>
  وَ<قول هوية='٢٣٦٥٥'>أَنْتِ ذَاْهِبَةٌ</قول></مقطع>
  <مقطع هوية='٤٠٠٩٤'>وَتَقُوْلُ <قول هوية='٣١٨٨٥'>هَاْتِي هٰذَا</قول> لِلْجَاْرِيَةِ</مقطع>
  <مقطع هوية='٧٦٩١٠'>وَتَقُوْلُ <قول هوية='٩٣٣٨٢'>هَذِي أَمَةُ اللهِ</قول></مقطع>
  <مقطع هوية='٢٧٤٦١'>وَ<قول هوية='٢٥٢٥٧'>اضْرِبِي</قول> إِذَا أَرَدْتَ الْمُؤَنَّثَ</مقطع>
  <مقطع هوية='٢١٥١٢'>وَإِنَّمَا الْكَسْرَةُ مِنَ الْيَاْءِ</مقطع>

  <مقطع هوية='٨١٢٩١'>وَمِمَّا جَاْءَ مِنَ الْوَصْفِ مُنَاْدًى وَغَيْرَ مُنَاْدًى</مقطع>
  <مقطع هوية='٨٤٠٣١'><قول هوية='٥٦٢٣٧'>يَا خَبَاْثِ</قول> وَ<قول هوية='٢٩٧٠٤'>يَا لَكَاْعِ</قول></مقطع>
  <مقطع هوية='٥٥٤٩٧'>فَهٰذَا اسْمٌ لِلْخَبِيْثَةِ وَلِلَّكْعَاْءِ</مقطع>
  <مقطع هوية='١٩٣٤٦'>وَمِثْلُ ذٰلِكَ قَوْلُ الشَّاْعِرِ <شاعر>النَّاْبِغَةِ الْجَعْدِيِّ</شاعر></مقطع>
  <شاهدة هوية='١٧٧٧٣' شاعر="النَّاْبِغَةُ الْجَعْدِيُّ">
    <بيت>
      <مصراع>فَقُلْتُ لَهَا عِيْثِي <ثبات>جَعَاْرِ</ثبات> وَجَرِّرِي</مصراع>
      <مصراع>بِلَحْمِ امْرِئٍ لَمْ يَشْهَدِ الْيَوْمَ نَاْصِرُهُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٩٩٤٧'>وَإِنَّمَا هُوَ اسْمٌ لِلْجَاْعِرَةِ</مقطع>
  <مقطع هوية='٦٤٦٢٤'>وَإِنَّمَا يُرِيْدُ بِذٰلِكَ الضَّبُعَ</مقطع>
  <مقطع هوية='٤١٣٤٨'>وَيُقَاْلُ لَهَا <حرف>قِثَاْمِ</حرف>
  لِأَنَّهَا تقثم أَيْ تَقْطَعُ</مقطع>

  <مقطع هوية='٠٢٥٧٢'>وَقَاْلَ الشّاْعِرُ</مقطع>
  <شاهدة هوية='٧٧٧٨٥'>
    <بيت>
      <مصراع>لِحَقَتْ <ثبات>حَلَاْقِ</ثبات> بِهِمْ عَلَى أَكْسَاْئِهِمْ</مصراع>
      <مصراع>ضَرْبَ الرِّقَاْبِ وَلَا يُهِمُّ الْمُغْنَمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٥٠٢٦'>فَـ<حرف>حَلَاْقِ</حرف> مَعْدُوْلٌ عَلَى <حرف>الْحَاْلِقَةِ</حرف></مقطع>
  <مقطع هوية='٧٠٠٩٣'>وَإِنَّمَا يُرِيْدُ بِذٰلِكَ الْمَنْيَّةَ لِأَنَّهَا تَحْلِقُ</مقطع>

  <مقطع هوية='٠٨٣٤٦'>وَقَاْلَ الشَّاْعِرُ <شاعر>مُهَلْهِلُ</شاعر></مقطع>
  <شاهدة هوية='٠١٥١٢' شاعر="مُهَلْهِلُ">
    <بيت>
      <مصراع>مَا أُرَجَّي بِالْعَيْشِ بَعْدَ تَدَاْمَى</مصراع>
      <مصراع>قَدْ أَرَاْهُمْ سُقُوْا بِكَأْسِ <ثبات>حَلَاْقِ</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٩٧٦٤'>فَهٰذَا كُلُّهُ مَعْدُوْلٌ عَنْ وَجْهِهِ وَأَصْلِهِ</مقطع>
  <مقطع هوية='٤١٧٢١'>فَجَعَلُوْا آخِرَهُ كَآخِرِ مَا كَاْنَ لِلْفِعْلِ</مقطع>
  <مقطع هوية='٦٣٣٥٦'>لِأَنَّهُ مَعْدُوْلٌ عَنْ أَصْلِهِ</مقطع>
  <مقطع هوية='٩١٣٠٥'>كَمَا عُدِلَ <حرف>نَظَاْرِ</حرف> وَ<حرف>حَذَاْرِ</حرف> وَأَشْبَاْهُهُمَا عَنْ حَدِّهِنَّ</مقطع>
  <مقطع هوية='٠٠٥٩٢'>وَكُلُّهُنَّ مُؤَنَّثٌ فَجَعَلُوْا بَاْبَهُنَّ وَاْحِدًا</مقطع>

  <مقطع هوية='٩٣١٤٧'>فَإِنْ قُلْتَ مَا بَاْلُ <حرف>فُسَقَ</حرف> وَنَحْوِهِ</مقطع>
  <مقطع هوية='١٩١٦٧'>لَا يَكُوْنُ جَزْمًا كَمَا كَاْنَ هٰذَا مَكْسُوْرًا</مقطع>
  <مقطع هوية='٣١١٠٥'>فَإِنَّمَا ذٰلِكَ لِأَنَّهُ لَمْ يَقَعْ فِي مَوْضِعِ الْفِعْلِ</مقطع>
  <مقطع هوية='٩١٠٠٠'>فَيَصِيْرَ بِمَنْزِلَةِ <حرف>صَهْ</حرف> وَ<حرف>مَهْ</حرف> وَنَحْوِهِمَا</مقطع>
  <مقطع هوية='٥٤٧٩٠'>فَيُشَبَّهُ هَاْهُنَا بِهِ فِي ذٰلِكَ الْمَوْضِعِ</مقطع>
  <مقطع هوية='٤٨٩٧٩'>وَإِنَّمْ كَسَرُوْا <مثال>فَعَاْلِ</مثال> هَاْهُنَا
  لِأَنَّهُمْ شَبَّهُوْهَا بِهَا فِي الْفِعْلِ</مقطع>

  <مقطع هوية='٤١٦٧٥'>وَمِمَّا جَاْءَ اسْمًا لِلْمَصْدَرِ
  قَوْلُ الشَّاْعِرِ <شاعر>النَّاْبِغَةِ</شاعر></مقطع>
  <شاهدة هوية='٢٤٣٧٦' شاعر="النَّاْبِغَةُ">
    <بيت>
      <مصراع>إِنَّا اقْتَسَمْنَا خُطَّتَيْنَا بَيْنَنَا</مصراع>
      <مصراع>فَحَمَلْتُ بَرَّةَ وَاحْتَمَلْتَ <ثبات>فَجَاْرِ</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٨٠٧١'>فَـ<حرف>فَجَاْرِ</حرف> مَعْدُوْلٌ عَنْ <حرف>الْفَجْرَةِ</حرف></مقطع>

  <مقطع هوية='٦٦٣٣٩'>وَقَاْلَ الشّاْعِرُ</مقطع>
  <شاهدة هوية='١٠٢٥١'>
    <بيت>
      <مصراع>فَقَاْلَ امْكُثِي حَتَّى <ثبات>يَسَاْرِ</ثبات> لَعَلَّنَا</مصراع>
      <مصراع>نَحُجُّ مَعًا قَاْلَتْ أَعَاْمًا وَقَاْبِلَهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٢٧٤٥'>فَهِيَ مَعْدُوْلَةٌ عَنْ <حرف>الْمَيْسَرَةِ</حرف></مقطع>
  <مقطع هوية='٩٩٩٠٩'>وَأُجْرِيَ هٰذَا الْبَاْبُ مَجْرَى الَّذِي قَبْلَهُ</مقطع>
  <مقطع هوية='٥٨٠٧٠'>لِأَنَّهُ عُدِلَ كَمَا عُدِلَ وَلِأَنَّهُ مُوَنَّثٌ بِمَنْزِلَتِهِ</مقطع>

  <مقطع هوية='٢٦٠٥٩'>وَقَاْلَ الشَّاْعِرُ <شاعر>الْجَعْدِيُّ</شاعر></مقطع>
  <شاهدة هوية='٦٤٥٨٣' شاعر="الْجَعْدِيُّ">
    <بيت>
      <مصراع>وَذَكَرْتَ مِنْ لَبَنِ الْمُحَلَّقِ شُرْبَةً</مصراع>
      <مصراع>وَالْخَيْلُ تَعْدُو بِالصَّعِيْدِ <ثبات>بَدَاْدِ</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٢٦٦٧'>فَهٰذَا بِمَنْزِلَةِ قَوْلِهِ <قول هوية='٤٩١٩٥'>تَعْدُو بَدَدًا</قول></مقطع>
  <مقطع هوية='٠٩١٥٢'>إِلَّا أَنَّ هٰذَا مَعْدُوْلٌ عَنْ حَدِّهِ مُؤَنَّثًا</مقطع>
  <مقطع هوية='٧٩٣٩٤'>وَكَذٰلِكَ [عُدِلَتْ عَلَيْهِ] <حرف>مَسَاْسِ</حرف></مقطع>
  <مقطع هوية='٤٦٢٦٢'>وَالْعَرَبُ تَقُوْلُ <قول هوية='٠٦٢٩٨'>أَنْتَ لَا مَسَاْسِ</قول>
  وَمَعْنَاْهُ <قول هوية='٣٦٣٢٨'>لَا تَمَسَّنِي وَلَا أَمَسُّكُ</قول></مقطع>
  <مقطع هوية='٦٥١٢٧'>وَ<قول هوية='٢٢٦٣٩'>دَعْنِي كَفَاْفِ</قول></مقطع>
  <مقطع هوية='٩٨٩٠٩'>فَهٰذَا مَعْدُوْلٌ عَنْ مُؤَنَّثٍ</مقطع>
  <مقطع هوية='٤١٦٤٨'>وَإِنْ كَاْنُوْا لَمْ يَسْتَعْمِلُوْا فِي كَلَاْمِهِمْ ذٰلِكَ الْمُؤَنَّثَ</مقطع>
  <مقطع هوية='٤٥٧٦٤'>الَّذِي عُدِلَ عَنْهُ <حرف>بَدَاْدٍ</حرف> وَأَخْوَاْتُهَا وَنَحْوُ ذَا فِي كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='٥١٦٣٤'>أَلَا تَرَى أَنَّهُمْ قَاْلُوْا <حرف>مَلَاْمِحَ</حرف> وَ<حرف>مَشَاْبِهَ</حرف> وَ<حرف>لَيَاْلٍ</حرف></مقطع>
  <مقطع هوية='٣٣٠١٦'>فَجَاْءَ جَمْعُهُ عَلَى حَدِّ مَا لَمْ يُسْتَعْمَلْ فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٩٥٩٥١'>لَا يَقُوْلُوْنَ <حرف>مَلْمَحَة</حرف> وَلَا <حرف>لَيْلَاْة</حرف></مقطع>
  <مقطع هوية='٨٠٨٢٠'>وَنَحْوُ ذَا كَثِيْرٍ</مقطع>
  <مقطع هوية='٩٩٤٦١'>قَاْلَ الشَّاْعِرُ <شاعر>الْمُتَلَمِّسُ</شاعر></مقطع>
  <شاهدة هوية='٩٦٠٠٢' شاعر="الْمُتَلَمِّسُ">
    <بيت>
      <مصراع><ثبات>جَمَاْدِ</ثبات> لَهَا <ثبات>جَمَاْدِ</ثبات> وَلَا تَقُوْلِي</مصراع>
      <مصراع>طوَالَ الدَّهْرِ مَا ذُكِرَتْ <ثبات>حَمَاْدِ</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣١٧٣٤'>فَهٰذَا بِمَنْزِلَةِ <حرف>جُمُوْدًا</حرف></مقطع>
  <مقطع هوية='٩٩٨٤٥'>وَ<حرف>لَا تَقُوْلِي حَمَاْدِ</حرف>
  عُدِلَ عَنْ قَوْلِهِ <حرف>حَمْدًا لَهَا</حرف></مقطع>
  <مقطع هوية='٣٢٥٩٩'>وَلَكِنَّهُ مَمَّا عُدِلَ عَنْ مُؤَنَّثٍ كَـ<حرف>بَدَاْدِ</حرف></مقطع>

  <مقطع هوية='٥١٩٥٧'>وَأَمَّا مَا جَاْءَ مَعْدُوْلًا عَنْ حَدِّهِ مِنْ بَنَاْتِ الْأَرْبَعَةِ
  فَقُوْلُهُ</مقطع>
  <شاهدة هوية='٥٨٤٣٨'>
    <بيت>
      <مصراع>قَاْلَتْ لَهُ رِيْحُ الصَّبَا <ثبات>قَرْقَاْرِ</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠١٢٥١'>فَإِنَّمَا يُرِيْدُ بِذٰلِكَ <قول هوية='١٣٣٠٠'>قَاْلَتْ لَهُ قَرْقِرْ بِالرَّعْدِ لِلسَّحَاْبِ</قول></مقطع>
  <مقطع هوية='٩٠٨٢٦'>وَكَذٰلِكَ <حرف>عَرْعَاْرِ</حرف>
  وَهِيَ بِمَنْزِلَةِ <حرف>قَرْقَاْرِ</حرف> وَهِيَ لُعْبَةٌ</مقطع>
  <مقطع هوية='٣٩١١٧'>وَإِنَّمَا هِيَ مَنْ <حرف>عَرْعَرْتُ</حرف></مقطع>
  <مقطع هوية='٠٩١٨٩'>وَنَظِيْرُهَا مِنَ الثَّلَاْثَةِ <حرف>خَرَاْجِ</حرف>
  أَيْ <حرف>اخْرُجُوْا</حرف> وَهِيَ لُعْبَةُ أَيْضًا</مقطع>

  <مقطع هوية='٤٠٨١٢'>وَاعْلَمْ أَنَّ جَمِيْعَ مَا ذَكَرْنَا إِذَا سَمَّيْتَ بِهِ امْرَأَةً</مقطع>
  <مقطع هوية='٤٧٢٣٥'>فَإِنَّ بَنِي تَمِيْمٍ تَرْفَعُهُ وَتَنْصِبُهُ</مقطع>
  <مقطع هوية='٠٥٤٩٧'>وَتُجْرِيْهِ مَجْرَى اسْمٍ لَا يَنْصَرِفُ</مقطع>
  <مقطع هوية='٨٥٢٢٣'>وَهُوَ الْقِيَاْسُ</مقطع>
  <مقطع هوية='٧٥٩٠٤'>لِأَنَّ هٰذَا لَمْ يَكُنْ اسْمًا عَلَمًا</مقطع>
  <مقطع هوية='٣٦٩٣٦'>فَهُوَ عِنْدَهُمْ بِمَنْزِلَةِ الْفِعْلِ الَّذِي يَكُوْنُ <مثال>فَعَاْلِ</مثال> مَحْدُوْدًا عَنْهُ</مقطع>
  <مقطع هوية='٧١٠٦٩'>وَذٰلِكَ الْفِعْلُ <حرف>افْعَلْ</حرف></مقطع>
  <مقطع هوية='١٠١٣٠'>لِأَنَّ <مثال>فَعَاْلِ</مثال> لَا يَتَغَيَّرُ عَنْ الْكَسْرِ</مقطع>
  <مقطع هوية='٤٩٩٩٥'>كَمَا أَنْ <مثال>افْعَلْ</مثال> لَا يَتَغَيَّرُ عَنْ حَاْلٍ وَاْحِدَةٍ</مقطع>
  <مقطع هوية='٧٦٣١٥'>فَإِذَا جَعَلْتَ <مثال>افْعَلْ</مثال> اسْمًا لِرَجُلٍ أَوِ امْرَأَةٍ</مقطع>
  <مقطع هوية='٧٧٤٠٥'>تَغَيَّرَ وَصَاْرَ بِمَنْزِلَةِ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٢٣٧٠١'>فَيَنْبَغِي لِـ<مثال>فَعَاْلِ</مثال>
  الَّتِي هِيَ مَعْدُوْلَةٌ عَنْ <مثال>افْعَلْ</مثال></مقطع>
  <مقطع هوية='٣٢٢٠٣'>أَنْ تَكُوْنَ بِمَنْزِلَتِهِ بَلْ هِيَ أَقْوَى</مقطع>
  <مقطع هوية='٤٧٣٨٢'>وَذٰلِكَ أَنَّ <مثال>فَعَاْلِ</مثال> اسْمٌ لِلْفِعْلِ</مقطع>
  <مقطع هوية='٥٦٩٣٠'>فَإِذَا نَقَلْتَهُ إِلَى الِاسْمِ نَقَلْتَهُ إِلَى شَيْءٍ هُوَ مِثْلُهُ</مقطع>
  <مقطع هوية='٠٠٠٢٨'>وَالْفِعْلُ إِذَا نَقَلْتَهُ إِلَى الِاسْمِ نَقَلْتَهُ إِلَى شَيْءٍ
  هُوَ مِنْهُ أَبْعَدُ</مقطع>
  <مقطع هوية='٢١٧٤٢'>وَكَذٰلِكَ كُلُّ <مثال>فَعَاْلِ</مثال>
  إِذَا كَاْنَتْ مَعْدُوْلَةً عَنْ غَيْرِ <مثال>افْعَلْ</مثال></مقطع>
  <مقطع هوية='١٠٢٠٤'>إِذَا جَعَلْتَهَا اسْمًا</مقطع>
  <مقطع هوية='٥١٣١٠'>لِأَنَّكَ إِذَا جَعَلْتَهَا عَلَمًا فَأَنْتَ لَا تُرِيْدُ ذٰلِكَ الْمَعْنَى</مقطع>
  <مقطع هوية='٩٥٩٦٥'>وَذٰلِكَ نَحْوُ <حرف>حَلَاْقِ</حرف>
  الَّتِي هِيَ مَعْدُوْلَةٌ عَنِ <حرف>الْحَاْلِقَةِ</حرف></مقطع>
  <مقطع هوية='٦٠٢٩٦'>وَ<حرف>فَجَاْرِ</حرف> الَّتِي هِيَ مَعْدُوْلَةٌ عَنِ <حرف>الْفَجْرَةِ</حرف> وَمَا أَشْبَهَ هٰذَا</مقطع>
  <مقطع هوية='٧١٣٥٣'>أَلَا تَرَى أَنَّ بَنِي تَمِيْمٍ يَقُوْلُوْنَ
  <قول هوية='٦٩٠٤٦'>هَذِهِ قَطَاْمُ</قول> وَ<قول هوية='٩٧٧٨٠'>هَذِهِ حَذَاْمُ</قول></مقطع>
  <مقطع هوية='٠٥٣٥٤'>لأَنَّ هَذِهِ مَعْدُوْلَةٌ عَنْ <حرف>حَاْذِمَةَ</حرف></مقطع>
  <مقطع هوية='٣٧١٢٨'>وَ<حرف>قَطَاْمُ</حرف> مَعْدُوْلَةٌ عَنْ <قول هوية='٣٧٤٨٧'>قَاْطِمَةَ</قول> أَوْ <حرف>قَطْمَةَ</حرف></مقطع>
  <مقطع هوية='١٣٦٩٦'>وَإِنَّمَا كُلُّ وَاْحِدَةٍ مِنْهُمَا مَعْدُوْلُةٌ
  عَنَ الِاسْمِ الَّذِي هُوَ عَلَمٌ</مقطع>
  <مقطع هوية='٨٦٦٢٦'>لَيْسَ عَنْ صِفَةٍ</مقطع>
  <مقطع هوية='٩٦٦٦٥'>كَمَا أَنَّ <حرف>عُمَرَ</حرف>
  مَعْدُوْلٌ عَنْ <حرف>عَاْمِرٍ</حرف> عَلَمًا لَا صِفَةً</مقطع>
  <مقطع هوية='٧٤٥٤٤'>لَوْلَا ذٰلِكَ لَقُلْتَ <قول هوية='٢٤٧٠٦'>هٰذَا الْعُمَرُ</قول>
  تُرِيْدُ <حرف>الْعَاْمِرَ</حرف></مقطع>
  <مقطع هوية='٩٨٧٤٠'>وَأَمَّا أَهْلُ الْحِجَاْزِ</مقطع>
  <مقطع هوية='٠٤٤٧٥'>فَلَمَّا رَأَوْهُ اسْمًا لِمُؤَنَّثٍ</مقطع>
  <مقطع هوية='٠٩٧٤٧'>وَرَأَوْا ذٰلِكَ الْبِنَاْءَ عَلَى حَاْلِهِ</مقطع>
  <مقطع هوية='١٩٧٤٩'>لَمْ يُغَيِّرُوْهُ</مقطع>
  <مقطع هوية='١٢٤٩٦'>لِأَنَّ الْبِنَاْءَ وَاْحِدٌ وَهُوَ هٰهُنَا اسْمٌ لِلْمُؤَنَّثِ</مقطع>
  <مقطع هوية='٣٣٨٥٣'>كَمَا كَاْنَ ثَمَّ اسْمًا لِلْمُؤَنَّثِ</مقطع>
  <مقطع هوية='٦١٦٨٧'>وَهُوَ هٰهُنَا مَعْرِفَةٌ كَمَا كَاْنَ ثَمَّ</مقطع>

  <مقطع هوية='٢٦٢٤١'>وَمِنْ كَلَاْمِهِمْ أَنْ يُشَبِّهُوْا الشَّيْءَ بِالشَّيْءِ</مقطع>
  <مقطع هوية='٧٢٠٩٨'>وَإِنْ لَمْ يَكُنْ مِثْلَهُ فِي جَمِيْعِ الْأَشْيَاْءِ</مقطع>
  <مقطع هوية='١٤٤٧٢'>وَسَتَرَى ذٰلِكَ إِنْ شَاْءَ اللهُ وَمِنْهُ مَا قَدْ مَضَى</مقطع>

  <مقطع هوية='٧٥٠٨٨'>فَأَمَّا مَا كَاْنَ آخِرُهُ رَاْءً</مقطع>
  <مقطع هوية='٠٨١٨٣'>فَإِنَّ أَهْلَ الْحِجَاْزِ وَبَنِي تَمِيْمٍ فِيْهِ مُتَّفِقُوْنَ</مقطع>
  <مقطع هوية='٠٢١١٥'>وَيَخْتَاْرُ بَنُو تَمِيْمٍ فِيْهِ لُغَةَ أَهْلِ الْحِجَاْزِ</مقطع>
  <مقطع هوية='٧١٢٣١'>كَمَا اتَّفَقُوْا فِي <حرف>يَرَى</حرف></مقطع>
  <مقطع هوية='٨٧٦٣١'>وَالْحِجَاْزِيَّةُ هِيَ اللُّغَةُ الْأُوْلَى الْقُدْمَى</مقطع>

  <مقطع هوية='٥٠٢٣١'>فَزَعَمَ <سند>الْخَلِيْلُ</سند> أَنَّ إِجْنَاْحَ الْأَلِفِ أَخَفُّ عَلَيْهِمْ يَعْنِي الإِمَاْلَةَ</مقطع>
  <مقطع هوية='٠٩٧٧٦'>لِيَكُوْنَ الْعَمَلُ مِنْ وَجْهٍ وَاْحِدٍ فَكَرِهُوْا تَرْكَ الْخِفَّةِ</مقطع>
  <مقطع هوية='٤٨٧٩٠'>وَعَلِمُوْا أَنَّهُمْ إِنْ كَسَرُوْا الرَّاْءَ وَصَلُوْا إِلَى ذٰلِكَ</مقطع>
  <مقطع هوية='٧٢٥٤٠'>وَأَنَّهُمْ إِنْ رَفَعُوْا لَمْ يَصِلُوْا</مقطع>
  <مقطع هوية='٤٤٣٠٦'>وَقَدْ يَجُوْزُ أَنْ تَرْفَعَ وَتَنْصِبَ مَا كَاْنَ فِي آخِرِهِ الرَّاْءُ</مقطع>
  <مقطع هوية='٥٨٧٨٣'>قَاْلَ <شاعر>الْأَعْشَى</شاعر></مقطع>
  <شاهدة هوية='٩٩٦١١' شاعر="الْأَعْشَى">
    <بيت>
      <مصراع>وَمَرَّ دَهْرٌ عَلَى <ثبات>وَبَاْرِ</ثبات></مصراع>
      <مصراع>فَهَلَكَتْ جَهْرَةً <ثبات>وَبَاْرُ</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٠٦٨٥'>وَالْقَوَاْفِي مَرْفُوْعَةَ</مقطع>
  <مقطع هوية='٢٣٣٦٦'>فَمِمَّا جَاْءَ وَآخِرُهُ رَاْءٌ <حرف>سَفَاْرِ</حرف>
  وَهُوَ اسْمُ مَاْءٍ</مقطع>
  <مقطع هوية='٤٥٧٤٥'>وَ<حرف>حَضَاْرِ</حرف> وَهُوَ اسْمُ كَوْكَبٍ</مقطع>
  <مقطع هوية='١١٨٦٠'>وَلَكِنَّهُمَا مُؤَنَّثَاْنِ كَـ<حرف>مَاْوِيَّةٍ</حرف> وَ<حرف>الشِّعْرَى</حرف></مقطع>
  <مقطع هوية='٩٧٣٩٨'>كَأَنَّ تِلْكَ اسْمُ الْمَاْءَةِ وَهَذِهِ اسْمُ الْكَوْكَبَةِ</مقطع>

  <مقطع هوية='٤٩٧٥٧'>وَمِمَّا يَدُلُّكَ عَلَى أَنَّ <مثال>فَعَاْلِ</مثال> مُؤَنَّثَةٌ</مقطع>
  <مقطع هوية='٣٢١١٦'>قَوْلُهُ <حرف>دُعِيَتْ نَزَاْلِ</حرف>
  وَلَمْ يَقُلْ <حرف>دُعِيَ نَزَاْلِ</حرف></مقطع>
  <مقطع هوية='٠٢٨٧٤'>وَأَنَّهُمْ لَا يَصْرِفُوْنَ رَجُلًا سَمَّوْهُ <حرف>رَقَاْشِ</حرف> وَ<حرف>حَذَاْمِ</حرف></مقطع>
  <مقطع هوية='٠٧١٤٠'>وَيَجْعَلُوْنَهُ بِمَنْزِلَةِ رَجُلٍ سَمَّوْهُ بِـ<حرف>عَنَاْقِ</حرف></مقطع>

  <مقطع هوية='٩٦٥٢٤'>وَاعْلَمْ أَنَّ جَمِيْعَ مَا ذَكَرْنَا فِي هٰذَا الْبَاْبِ مِنْ <مثال>فَعَاْلِ</مثال></مقطع>
  <مقطع هوية='٨١٠١٦'>مَا كَاْنَ مِنْهُ بِالرَّاْءِ وَغَيْرِ ذٰلِكَ</مقطع>
  <مقطع هوية='٢٠١٥٣'>إِذَا كَاْنَ شَيْءٌ مِنْهُ اسْمًا لِمُذَكَّرٍ لَمْ يَنْجَرَّ أَبَدًا</مقطع>
  <مقطع هوية='٠٧٢٢٠'>وَكَاْنَ الْمُذَكَّرُ فِي هٰذَا بِمَنْزِلَتِهِ إِذَا سُمِّيَ بِـ<حرف>عَنَاْقِ</حرف></مقطع>
  <مقطع هوية='٠١٠١١'>لِأَنَّ هٰذَا الْبِنَاْءَ لَا يَجِيْءُ مَعْدُوْلًا عَنْ مُذَكَّرٍ فَيُشَبَّهُ بِهِ</مقطع>
  <مقطع هوية='٢٥٦٠٤'>تَقُوْلُ <قول هوية='٣٣٢٢٣'>هٰذَا حَذَاْمُ</قول></مقطع>
  <مقطع هوية='٣٣٢٣٨'>وَ<قول هوية='٥٣٤٨٧'>رَأَيْتُ حَذَاْمَ قَبْلُ</قول></مقطع>
  <مقطع هوية='٨٠٤٩٣'>وَ<قول هوية='٩٤٤١٧'>مَرَرْتُ بِحَذَاْمَ قَبْلُ</قول></مقطع>
  <مقطع هوية='١٠٠٥٤'>سَمِعْتُ ذٰلِكَ مِمَّنْ يُوْثَقُ بِعِلْمِهِ</مقطع>
  <مقطع هوية='٩٤٩٧٦'>وَإِذَا كَاْنَ جَمِيْعُ هٰذَا نَكِرَةً انْصَرَفَ</مقطع>
  <مقطع هوية='٧٦٤٤٢'>كَمَا يَنْصَرِفُ <حرف>عُمَرُ</حرف> فِي النَّكِرَةِ</مقطع>
  <مقطع هوية='٥٠٩٧٤'>لأَنَّ ذَا لَا يَجِيْءُ مَعْدُوْلًا عَنْ نَكِرَةٍ</مقطع>
  <مقطع هوية='٤٥٣١٤'>وَمِنَ الْعَرَبِ مَنْ يَصْرِفُ <حرف>رَقَاْشِ</حرف> وَ<حرف>غَلَاْبِ</حرف> إِذَا سَمَّى بِهِ مُذَكَّرًا</مقطع>
  <مقطع هوية='٨٠٢٢٦'>لَا يَضَعُهُ عَلَى التَّأْنِيْثِ بَلْ يَجْعَلُهُ اسْمًا مُذَكَّرًا</مقطع>
  <مقطع هوية='٥٦٠٦٤'>كَأَنَّهُ سَمَّى رَجُلًا بِـ<حرف>صَبَاْحٍ</حرف></مقطع>
  <مقطع هوية='٣٧١٧٦'>وَإِذَا كَاْنَ الِاسْمُ عَلَى بِنَاْءِ <مثال>فَعَاْلِ</مثال></مقطع>
  <مقطع هوية='٩٦٨٩٤'>نَحْوَ <حرف>حَذَاْمِ</حرف> وَ<حرف>رَقَاْشِ</حرف></مقطع>
  <مقطع هوية='١٥٦٠٨'>لَا تَدْرِي مَا أَصْلُهُ أَمُعْدُوْلٌ أَمْ غَيْرُ مَعْدُوْلٍ</مقطع>
  <مقطع هوية='٩١٥٤٠'>أَمْ مُؤَنَّثٍ أَمْ مُذَكَّرٌ</مقطع>
  <مقطع هوية='٧٣٦٩٠'>فَالْقِيَاْسُ فِيْهِ أَنْ تَصْرِفَهُ</مقطع>
  <مقطع هوية='٨٦٢٠٩'>لِأَنَّ الْأَكْثَرَ مِنْ هٰذَا الْبِنَاْءِ مَصْرُوْفٌ غَيْرُ مَعْدُوْلٍ</مقطع>
  <مقطع هوية='٧٥٣٥٢'>مِثْلَ <حرف>الذَّهَاْبِ</حرف> وَ<حرف>الصَّلَاْحِ</حرف>
  وَ<حرف>الْفَسَاْدِ</حرف> وَ<حرف>الرَّبَاْبِ</حرف></مقطع>

  <مقطع هوية='٦١٣٢٧'>وَاعْلَمْ أَنَّ <مثال>فَعَاْلِ</مثال>
  جَاْئِزَةٌ مِنْ كُلِّ مَا كَاْنَ عَلَى بِنَاْءِ <مثال>فَعَلَ</مثال> وَ<مثال>فَعُلَ</مثال>
  وَ<مثال>فَعِلَ</مثال></مقطع>
  <مقطع هوية='٦٢٠٧٧'>وَلَا يَجُوْزُ مِنْ <مثال>أَفْعَلْتُ</مثال></مقطع>
  <مقطع هوية='٠٣٧٨٧'>لِأَنَّا لَمْ نَسْمَعْهُ مِنْ [بَنَاْتِ] الْأَرْبَعَةِ</مقطع>
  <مقطع هوية='٣٦٥٩٥'>إِلَّا أَنْ تَسْمَعَ شَيْئًا فَتُجِيْزَهُ فِيْمَا سَمِعْتَ وَلَا تُجَاْوِزَهُ</مقطع>
  <مقطع هوية='٨٦٣٢٣'>فَمِنْ ذٰلِكَ <حرف>قَرْقَاْرِ</حرف> وَ<حرف>عَرْعَاْرِ</حرف></مقطع>

  <مقطع هوية='٦٤٠٧٤'>وَاعْلَمْ أَنَّكَ إِذَا قُلْتَ <مثال>فَعَاْلِ</مثال></مقطع>
  <مقطع هوية='٨٢٣٣٧'>وَأَنْتَ تَأْمُرُ امْرَأَةً أَوْ رَجُلًا أَوْ أَكْثَرَ مِنْ ذٰلِكَ</مقطع>
  <مقطع هوية='٠٤١٤٦'>أَنَّهُ عَلَى لَفْظِكَ إِذَا كُنْتُ تَأْمُرُ رَجُلًا وَاْحِدًا</مقطع>
  <مقطع هوية='٦٠٠٩١'>وَلَا يَكُوْنُ مَا بَعْدَهُ إِلَّا نَصْبًا لِأَنَّ مَعْنَاْهُ <مثال>افْعَلْ</مثال></مقطع>
  <مقطع هوية='٤٣١٦١'>كَمَا أَنَّ مَا بَعْدَ <مثال>افْعَلْ</مثال> لَا يَكُوْنُ إِلَّا نَصْبًا</مقطع>
  <مقطع هوية='٩٤٧٦٠'>وَإِنَّمَا مَنَعَهُمْ أَنْ يُضْمِرُوْا فِي <مثال>فَعَاْلِ</مثال>
  الِاثْنَيْنِ وَالْجَمِيْعَ وَالْمَرْأَةَ</مقطع>
  <مقطع هوية='١٨٨٢١'>لِأَنَّهُ لَيْسَ بِفِعْلٍ وَإِنَّمَا هُوَ اسْمٌ فِي مَعْنَى الْفِعْلِ</مقطع>

  <مقطع هوية='٧٠٨٤٠'>وَاعْلَمْ أَنَّ <مثال>فَعَاْلِ</مثال>
  لَيْسَ بِمُطَّرِدٍ فِي الصِّفَاْتِ نَحْوَ <حرف>حَلَاقِ</حرف></مقطع>
  <مقطع هوية='٩٧٨٦٩'>وَلَا فِي مَصْدَرٍ نَحْوَ <حرف>فَجَاْرِ</حرف></مقطع>
  <مقطع هوية='٣٠٢٨٠'>وَإِنَّمَا يطَّردُ هٰذَا الْبَاْبُ فِي النِّدَاْءِ وَفِي الْأَمْرِ</مقطع>

