<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٦١"
     درنبورج="١-٢٢٢"
     البكاء="٢-١٦٥"
     هارون="٢-٨٨"
     يعقوب="٢-٨٥"
     رقم="١٢١">
  <عنوان>
    <مقطع رقم="١">هَذَا بَاْبُ مَا يَنْتَصِبُ فِيْهِ الْخَبَرُ</مقطع>
    <مقطع رقم="٢">لِأَنَّهُ خَبَرٌ لِمَعْرُوْفٍ يَرْتَفِعُ عَلَى الابْتِدَاْءِ قَدَّمَتْهَ أَوْ أَخَّرْتَهُ</مقطع>
  </عنوان>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ <قول رقم="١">فِيْهَا عَبْدُ اللّٰهِ قَاْئِمًا</قول> وَ<قول رقم="٢">عَبْدُ اللّٰهِ فِيْهَا قَاْئِمًا</قول>
  </مقطع>
  <مقطع رقم="٤">فَـ<حرف>عَبْدُ اللّٰهِ</حرف> ارْتَفَعَ بِالِابْتِدَاْءِ</مقطع>
  <مقطع رقم="٥">لِأنَّ الَّذِي ذَكَرْتَ قَبْلَهُ وَبَعْدَهُ لَيْسَ بِهِ</مقطع>
  <مقطع رقم="٦">وَإِنَّمَا هُوَ مَوْضِعٌ لَهُ</مقطع>
  <مقطع رقم="٧">وَلٰكِنَّهُ يَجْرِي مَجْرَى الِٱسْمِ الْمَبْنِيِّ عَلَى مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٨">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول رقم="٣">فِيْهَا عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٩">حَسُنَ السُّكُوْتُ وَكَاْنَ كَلَاْمًا مُسْتَقِيْمًا</مقطع>
  <مقطع رقم="١٠">كَمَا حَسُنَ وَاسْتُغْنِيَ فِي قَوْلِكَ <قول رقم="٤">هَذَا عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="١١">وَتَقُوْلُ <قول رقم="٥">عَبْدُ اللّٰهِ فِيْهَا</قول></مقطع>
  <مقطع رقم="١٢">فَيَصِيْرُ كَقَوْلِكَ <قول رقم="٦">عَبْدُ اللّٰهِ أَخُوْكَ</قول></مقطع>
  <مقطع رقم="١٣">إِلَّا أَنْ <حرف>عَبْدُ اللّٰهِ</حرف> يَرْتَفِعُ مُقَدَّمًا كَاْنَ أَوْ مُؤَخَّرًا بِالِابْتِدَاْءِ</مقطع>
  <مقطع رقم="١٤">وَيَدُلُّكَ عَلَى ذٰلِكَ أَنَّكَ تَقُوْلُ <قول رقم="٧">إِنَّ فِيْهَا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٥">فَيَصِيْرُ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٨">إِنَّ زَيْدًا فِيْهَا</قول>
  </مقطع>
  <مقطع رقم="١٦">لِأنَّ <حرف>فِيْهَا</حرف> لمَّا صَاْرَتْ مُسْتَقَرًّا لِـ<حرف>زَيْدٍ</حرف> يَسْتَغْنِي بِهِ السُّكُوْتُ</مقطع>
  <مقطع رقم="١٧">وَقَعَ مَوْقِعَ الْأَسْمَاْءِ</مقطع>
  <مقطع رقم="١٨">كَمَا أَنَّ قَوْلَكَ <قول رقم="٩">عَبْدُ اللّٰهِ لَقِيْتُهُ</قول> يَصِيْرُ <حرف>لَقِيْتُهُ</حرف> فِيْهِ بِمَنْزِلَةِ الِٱسْمِ</مقطع>
  <مقطع رقم="١٩">كأَنَّكَ قُلْتَ <قول رقم="١٠">عَبْدُ اللّٰهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٢٠">فَصَاْرَ قَوْلُكَ <حرف>فِيْهَا</حرف> كَقَوْلِكَ <قول رقم="١١">اسْتَقَرَّ عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٢١">ثُمَّ أَرَدْتَ أَنْ تُخْبِرَ عَلَى أَيَّةِ حَاْلٍ اسْتَقَرَّ فَقُلْتَ <حرف>قَاْئِمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٢">فَـ<حرف>قَاْئِمٌ</حرف> حَاْلٌ مُسَتَقَرٌّ فِيْهَا</مقطع>
  <مقطع رقم="٢٣">وَإِنْ شِئْتَ أَلْغَيْتَ <حرف>فِيْهَا</حرف>
  </مقطع>
  <مقطع رقم="٢٤">فَقُلْتَ <قول رقم="١٢">فِيْهَا عَبْدُ اللّٰهِ قَاْئِمٌ</قول>
  </مقطع>
  <مقطع رقم="٢٥">قَاْلَ النَّاْبغَة</مقطع>
  <شاهدة مقطع="٢٦" رقم="١">
    <بيت>
      <مصراع>فَبِتُّ كَأَنِّي سَاْوَرَتْنِي ضَئِيْلَةٌ</مصراع>
      <مصراع>مِنَ الرُّقْشِ فِي أَنْيِاْبِهَا السُّمُّ نَاْقِعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٧">وَقَاْلَ الْهذليُّ</مقطع>
  <شاهدة مقطع="٢٨" رقم="٢">
    <بيت>
      <مصراع>لَا دَرَّ دَرِّي إِنْ أَطْعَمْتُ نَاْزِلَكُمْ</مصراع>
      <مصراع>قِرْفَ الْحَتِيَّ وَعِنْدِي الْبُرُّ مَكْنُوْزُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٩">كأَنَّكَ قُلْتَ <قول رقم="١٣">الْبُرُّ مَكْنُوْزٌ عِنْدَي</قول> وَ<قول رقم="١٤">عَبْدُ اللّٰهِ قَاْئِمٌ فِيْهَا</قول>
  </مقطع>
  <مقطع رقم="٣٠">فَإِذَا نَصَبْتَ <حرف>الْقَاْئِمَ</حرف> فـ<حرف>فِيْهَا</حرف> قَدْ حَاْلَتْ بَيْنَ الْمُبْتَدَأِ وَ<حرف>الْقَاْئِمِ</حرف>
  </مقطع>
  <مقطع رقم="٣١">وَاسْتُغْنِيَ بِهَا</مقطع>
  <مقطع رقم="٣٢">فَعَمَلُ الْمُبْتَدَأِ حِيْنَ لَمْ يَكُنْ <حرف>الْقَاْئِمُ</حرف> مَبْنِيًّا عَلَيْهِ عَمَلَ <قول رقم="١٥">هٰذَا زَيْدٌ قَاْئِمًا</قول>
  </مقطع>
  <مقطع رقم="٣٣">وَإِنَّمَا تَجْعَلُ <حرف>فِيْهَا</حرف> إِذَا رَفَعْتَ <حرف>الْقَاْئِمَ</حرف> مُسْتَقَرًّا لِلقِيَاْمِ ومَوْضِعًا لَهُ</مقطع>
  <مقطع رقم="٣٤">وَكأَنَّكَ لَوْ قُلْتَ <قول رقم="١٦">فِيْهَا عَبْدُ اللّٰهِ</قول> لَمْ يَجُزْ عَلَيْهِ السُّكُوْتُ</مقطع>
  <مقطع رقم="٣٥">وَهٰذَا يَدُلُّكَ عَلَى أَنَّ <حرف>فِيْهَا</حرف> لَا يُحْدِثُ الرَّفْعَ أَيْضًا فِي <حرف>عَبْدُ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="٣٦">لِأَنَّهَا لَوْ كَاْنَتْ بِمَنْزِلَةِ <حرف>هٰذَا</حرف> لَمْ تكن لَتُلْغَى</مقطع>
  <مقطع رقم="٣٧">وَلَوْ كَاْنَ <حرف>عَبْدُ اللّٰهِ</حرف> يَرْتَفِعُ بِـ<حرف>فِيْهَا</حرف> لَارْتَفَعَ بِقَوْلِكَ <قول رقم="١٧">بِكَ عَبْدُ اللّٰهِ مَأْخُوْذٌ</قول>
  </مقطع>
  <مقطع رقم="٣٨">لِأنَّ الَّذِي يَرْفَعُ ويَنْصِبُ</مقطع>
  <مقطع رقم="٣٩">مَا يَسْتَغْنِي عَلَيْهِ السُّكُوْتُ وَمَالَا يَسْتَغْنِي</مقطع>
  <مقطع رقم="٤٠">بِمَنْزِلَةٍ [ وَاْحِدَةٍ ]</مقطع>
  <مقطع رقم="٤١">أَلَا تَرَى أَنَّ <حرف>كَاْنَ</حرف> تَعْمَلُ عَمَلَ <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع رقم="٤٢">وَلَوْ قُلْتَ <قول رقم="١٨">كَاْنَ عَبْدُ اللّٰهِ</قول> لَمْ يَكُنْ كَلَامًا</مقطع>
  <مقطع رقم="٤٣">وَلَوْ قُلْتَ <قول رقم="١٩">ضَرَبَ عَبْدُ اللّٰهِ</قول> كَاْنَ كَلَامًا</مقطع>
  <مقطع رقم="٤٤">ومِمَّا جَاْءَ فِي الشِّعْرِ أَيْضًا مَرْفُوْعًا قَوْلُهُ لِابْنِ مُقْبلٍ</مقطع>
  <شاهدة مقطع="٤٥" رقم="٣">
    <بيت>
      <مصراع>لَا سَاْفِرُ النَّيِّ مَدْخُوْلٌ وَلَا هَيِجٌ</مصراع>
      <مصراع>عَاْرِي الْعِظَاْمِ عَلَيْهِ الْوَدْعُ مَنْظُوْمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٦">فَجَمِيْعُ مَا يَكُوْنُ ظَرْفًا تُلْغِيْهِ إِنْ شِئْتَ</مقطع>
  <مقطع رقم="٤٧">لِأَنَّهُ لَا يَكُوْنُ آخِرًا إِلَّا عَلَى مَا كَاْنَ عَلَيْهِ أَوَّلًا قَبْلَ الظَّرْفِ</مقطع>
  <!-- in الكناء -->
  <مقطع رقم="٤٨">وَذٰلِكَ قَوْلُكَ <قول رقم="٢٠">فِيْهَا زَيْدٌ قَاْئِمٌ</قول>
  </مقطع>
  <مقطع رقم="٤٩">فَهذَا بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٢١">زَيْدٌ قَاْئِمٌ فِيْهَا</قول> إِذَا جَعَلْتَ كَلَامَكَ أَوَّلًا قَبْلَ الظَّرْفِ</مقطع>
  <مقطع رقم="٥٠">وَيَكُوْنُ مَوْضِعَ الْخَبَرِ دُوْنَ الِٱسْمِ</مقطع>
  <مقطع رقم="٥١">فَجَرَى فِي أَحَدِ الْوَجْهَيْنِ</مقطع>
  <مقطع رقم="٥٢">مَجْرَى مَالَا يَسْتَغْنِي عَلَيْهِ السُّكُوْتُ</مقطع>
  <مقطع رقم="٥٣">كَقَوْلِكَ <قول رقم="٢٢">فِيْكَ زَيْدٌ رَاْغِبٌ</قول> فَرَغْبَتُهُ فِيْهِ</مقطع>
  <مقطع رقم="٥٤">وَمِثْلُ قَوْلِكَ <قول رقم="٢٣">فِيْهَا عَبْدُ اللّٰهِ قَاْئِمًا</قول>
  </مقطع>
  <مقطع رقم="٥٥">
    <قول رقم="٢٤">هُوَ لَكَ خَاْلِصًا</قول>
  </مقطع>
  <مقطع رقم="٥٦">وَ<قول رقم="٢٥">هُوَ لَكَ خَاْلِصٌ</قول>
  </مقطع>
  <مقطع رقم="٥٧">كَأَنَّ قَوْلَكَ <حرف>هُوَ لَكَ</حرف> بِمَنْزِلَةِ <قول رقم="٢٦">أَهِبُهُ لَكَ</قول> ثُمَّ قُلْتَ <حرف>خَاْلِصًا</حرف>
  </مقطع>
  <مقطع رقم="٥٨">وَمَنْ قَاْلَ <قول رقم="٢٧">فِيْهَا عَبْدُ اللّٰهِ قَاْئِمٌ</قول>
  </مقطع>
  <مقطع رقم="٥٩">قَاْلَ <قول رقم="٢٨">هُوَ لَكَ خَاْلِصٌ</قول>
  </مقطع>
  <مقطع رقم="٦٠">فَيَصِيْرُ <حرف>خَاْلِصٌ</حرف> مَبْنِيًّا عَلَى <حرف>هُوَ</حرف>
  </مقطع>
  <مقطع رقم="٦١">كَمَا كَاْنَ <حرف>قَاْئِمٌ</حرف> مَبْنِيًّا عَلَى <حرف>عَبْدُ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="٦٢">و <حرف>فِيْهَا</حرف> لَغْوٌ إِلَّا أَنَّكَ ذَكَرْتَ <حرف>فِيْهَا</حرف> لِتُبَيِّنَ أَيْنَ الْقِيَاْمُ</مقطع>
  <مقطع رقم="٦٣">وَكَذٰلِكَ <حرف>لَكَ</حرف> إِنَّمَا أَرَدْتَ أَنْ تُبَيِّنَ لِمَنْ الْخَاْلِصُ</مقطع>
  <مقطع رقم="٦٤">وَقَدْ قُرِىءَ هٰذَا الْحَرْفُ عَلَى وَجْهَيْن <آية>قُلْ هِيَ لِلَّذِيْنَ ءَامَنُوْا فِي ٱلْحَيَوٰةِ ٱلدُّنْيَا خَاْلِصَةً يَوْمَ الْقِيَـٰمَةِ</آية> بِالرَّفْعِ وَالنَّصْبِ</مقطع>
  <مقطع رقم="٦٥">وَبَعْضُ الْعَرَبِ يَقُوْلُ <قول رقم="٢٩">هُوَ لَكَ الْجَمَّاْءُ الْغَفِيْرُ</قول>
  </مقطع>
  <مقطع رقم="٦٦">يَرْفَعُ كَمَا يَرْفَعُ <حرف>الْخَاْلِصَ</حرف>
  </مقطع>
  <مقطع رقم="٦٧">وَالنَّصْبُ أَكْثَرُ لِأنَّ <حرف>الْجَمَّاْءَ الْغَفِيْرَ</حرف> بِمَنْزِلَةِ الْمَصْدَرِ</مقطع>
  <مقطع رقم="٦٨">فَكَأَنَّهُ قَاْلَ <حرف>هُوَ لَكَ خُلُوْصًا</حرف>
  </مقطع>
  <مقطع رقم="٦٩">فَهٰذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
  <مقطع رقم="٧٠">وَمِمَّا جَاْءَ فِي الشِّعْرِ قَدِ انْتَصَبَ خَبَرُهُ وَهُوَ مُقَدَّمٌ قَبْلَ الظَّرْفِ قَوْلُهُ</مقطع>
  <شاهدة مقطع="٧١" رقم="٤">
    <بيت>
      <مصراع>إِنَّ لَكُمْ أَصْلَ الْبِلَادِ وَفَرْعَهَا</مصراع>
      <مصراع>فَالْخَيْرُ فِيْكَمْ ثَاْبِتًا مَبْذُوْلًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٢">وَسَمِعْنَا بَعْضَ الْعَرَبِ الْمَوْثُوْقِ بِهِمْ يَقُوْلُ</مقطع>
  <مقطع رقم="٧٣">
    <قول رقم="٣٠">أَتَكَلَّمُ بِهٰذَا وَأَنْتَ هٰهُنَا قَاْعِدًا</قول>
  </مقطع>
  <مقطع رقم="٧٤">وَمِمَّا يَنْتَصِبُ لِأَنَّهُ حَاْلٌ وَقَعَ فِيْهِ أَمْرٌ قَوْلُ الْعَرَبِ</مقطع>
  <مقطع رقم="٧٥">
    <قول رقم="٣١">هُوَ رَجُلُ صِدْقٍ مَعْلُوْمًا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٦">وَ<قول رقم="٣٢">هُوَ رَجُلُ صِدْقٍ مَعْرُوْفًا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٧">وَ<قول رقم="٣٣">هُوَ رَجُلُ صِدْقٍ بَيَّنًا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٨">كَأَنَّهُ قَاْلَ <قول رقم="٣٤">هٰذَا رَجُلُ صِدْقٍ مَعْرُوْفًا صَلاْحُهُ</قول>
  </مقطع>
  <مقطع رقم="٧٩">فَصَاْرَ حَاْلًا وَقَعَ فِيْهِ أَمْرٌ</مقطع>
  <مقطع رقم="٨٠">لِأَنَّكَ إِذَا قُلْتَ <قول رقم="٣٥">هُوَ رَجُلُ صِدْقٍ</قول> فَقَدْ أَخْبَرْتَ بِأَمْرٍ وَاْقِعٍ</مقطع>
  <مقطع رقم="٨١">ثُمَّ جَعَلْتَ ذٰلِكَ الْوُقُوْعَ عَلَى هٰذِهِ الْحَاْلِ</مقطع>
  <مقطع رقم="٨٢">وَلَوْ رَفَعْتَ كَاْنَ جَاْئِزًا عَلَى أَنْ تَجْعَلَهُ صِفَةٍ</مقطع>
  <مقطع رقم="٨٣">كأَنَّكَ قُلْتَ <قول رقم="٣٦">هُوَ رَجُلٌ مَعْرُوْفٌ صَلَاحُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٤">وَمِثْلُ ذٰلِكَ <قول رقم="٣٧">مَرَرْتُ بِرَجُلٍ حَسَنَةٍ أُمُّهُ كَرِيْمًا أَبُوْهِا</قول>
  </مقطع>
  <مقطع رقم="٨٥">زَعَمَ الْخَلِيْلُ أَنَّهُ أَخْبَرَ عَنْ الْحُسْنِ أَنَّهُ وَجَبَ لَهَا فِي هٰذِهِ الْحَاْلِ</مقطع>
  <مقطع رقم="٨٦">وَهُوَ كَقَوْلِكَ <قول رقم="٣٨">مَرَرْتُ بِرَجُلٍ ذَاْهِبَةٍ فَرَسُهُ مَكْسُوْرًا سَرْجُهَا</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَالْأَوَّلُ كَقَوْلِكَ <قول رقم="٣٩">هُوَ رَجُلُ صِدْقٍ مَعْرُوْفًا صِدْقُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٨">وَإِنْ شِئْتَ قُلْتَ <حرف>مَعْرُوْفٌ ذٰلِكَ</حرف>
  <حرف>ومَعْلُوْمٌ ذٰلِكَ</حرف>
  </مقطع>
  <مقطع رقم="٨٩">عَلَى قَوْلِكَ <قول رقم="٤٠">ذَاْكَ مَعْرُوْفٌ</قول> وَ<قول رقم="٤١">ذَاْكَ مَعْلُوْمٌ</قول>
  </مقطع>
  <مقطع رقم="٩٠">سَمِعْتُهُ مِنَ الْخَلِيْلِرَحِمَهُ اللهُ</مقطع>

