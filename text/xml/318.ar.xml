    <مقطع هوية='٩٧٠٨٦'>وَفِي  <حرف>دَسْتَوَاءَ</حرف>
        <حرف>دَسْتُوَانِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٥٦١٠١'>مِثْلُ  <حرف>بَحْرَانِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٢٨٩٣٢'>وَزَعَمَ الْخَلِيْلُ أَنَّهُمْ بَنَوْ  <حرف>الْبَحْرَ</حرف> عَلَى  <حرف>فَعْلَانْ</حرف>
   </مقطع>
    <مقطع هوية='٧٣٨٧٧'>وَإِنَّمَا كَانَ الْقِيَاسُ أَنْ يَقُوْلُوْا  <حرف>بَحْرِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٢٥٥٠١'>وَقَالُوْا فِي  <حرف>الْأُفْقَ</حرف>
        <حرف>أَفَقِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٠٠٦٩٧'>وَمِنْ الْعَرَبِ مَنْ يَقُوْلُ  <حرف>أُفُقِيٌّ</حرف> فَهُوَ عَلَى الْقِيَاسِ</مقطع>
    <مقطع هوية='١٥٩١٩'>وَقَالُوْا فِي  <حرف>حَرُوْرَاءُ</حرف> وَهُوَ مَوْضِعٌ  <حرف>حَرُوْرِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٢٤٤٥٣'>وَفِي  <حرف>جَلُوْلاءَ</حرف> :  <حرف>جَلُوْلِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٥٣٦٥٩'>كَمَا قَالُوْا فِي  <حرف>خُرَاسَانَ</حرف> : <حرف>خُرْسِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='٨١٧٢٣'>وَ<حرف>خُرَاسَانِيٌّ</حرف> أَكْثَرَ وَ<حرف>خُراسِيٌّ</حرف> لُغَةٌ</مقطع>
    <مقطع هوية='٤٥٣٠١'>وَقَالَ بَعْضُهُمْ  <حرف>إِبِلٌ حَمَضِيَّةٌ</حرف> إِذَا أَكَلَتِ الْحَمْضَ وَ<حرف>حَمْضيِّةٌ</حرف> أَجْوَدُ</مقطع>
    <مقطع هوية='٨٦٣٦٣'>وَقَدْ يُقَالُ  <حرف>بَعِيْرٌ حَامِضٌ وَعَاضَةٌ</حرف> إِذَا أَكَلَ الْعِضَاهَ وَهُوَ ضَرْبٌ مِنَ الشَّجَرِ</مقطع>
    <مقطع هوية='٨١٣٢٧'>وَ<حرف>حَمْضِيَّةٌ</حرف> أَجْوَدُ وَأَكْثَرُ وَأَقِيْسُ فِي كَلَامِهِمْ</مقطع>
    <مقطع هوية='٣٠٣٩٨'>وَقَالَ بَعْضُهُمْ  <حرف>خَرْفِيٌّ</حرف> أَضَاْفَ إِلَى <حرف>الْخَرِيفِ</حرف> وَحَذَفَ الْيَاءَ</مقطع>
    <مقطع هوية='٣٠٤٣٩'>وَ<حرف>الخَرْفِيُّ</حرف> فِي كَلَامِهِمْ أَكْثَرُ مِنْ  <حرف>الْخَرِيفِيُّ</حرف>
   </مقطع>
    <مقطع هوية='٩٠٤٩٢'>إِمَّا أَضَاْفَهُ إِلَى  <حرف>الْخَرَفِ</حرف> وَإِمَّا بَنَى  <حرف>الْخَرِيفَ</حرف> عَلَى فِعْلٍ</مقطع>
    <مقطع هوية='١٠٠٠٦'>وَقَالُوْا  <حرف>إِبِلٌ طُلَاحِيَّةٌ</حرف> إِذَا أَكَلَتِ الطَّلْحَ</مقطع>
    <مقطع هوية='٢٨٤٢٦'>وَقَالُوْا فِي  <حرف>عِضَاهٍ</حرف>
        <حرف>عِضَاهِيٌّ</حرف> فِي قَوْلِ مَنْ جَعَلَ الْوَاحِدَةَ  <حرف>عِضَاهةٌ</حرف>
   </مقطع>
    <مقطع هوية='٣١٧٩٠'>مِثْلَ  <حرف>قَتَادَةٍ</حرف> وَ<حرف>قَتَادٍ</حرف>
   </مقطع>
    <مقطع هوية='٥٣٣٥٢'>وَ<حرف>الْعِضَاهَةُ</حرف> بِكَسْرِ الْعَيْنِ <هارون مجلد="3" صفحة="336"/>عَلَىَ الْقِيَاسِ</مقطع>
    <مقطع هوية='٥٧٦٩١'>فَأَمَّا مَنْ جَعَلَ جَمِيْعَ  <حرف>الْعِضَةِ</حرف>
        <حرف>عِضَوَاتِ</حرف> وَجَعَلَ الَّذِي ذَهَبَ الْوَاوُ</مقطع>
    <مقطع هوية='٨٦٢٤٢'>فَإِنَّهُ يَقُوْلُ  <حرف>عِضَوِيٌّ</حرف>
   </مقطع>
    <مقطع هوية='١٣٨٩٧'>وَأَمَّا مَنْ جَعَلَهُ بِمَنْزِلَةِ  <حرف>الْمِيَاهِ</حرف> وَجَعَلَ الْوَاحِدَةَ  <حرف>عِضَاهَةً</حرف>
