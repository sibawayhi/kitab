    <مقطع رقم="٤٠">وَفِي  <حرف>دَسْتَوَاءَ</حرف>
        <حرف>دَسْتُوَانِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤١">مِثْلُ  <حرف>بَحْرَانِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤٢">وَزَعَمَ الْخَلِيْلُ أَنَّهُمْ بَنَوْ  <حرف>الْبَحْرَ</حرف> عَلَى  <حرف>فَعْلَانْ</حرف>
   </مقطع>
    <مقطع رقم="٤٣">وَإِنَّمَا كَانَ الْقِيَاسُ أَنْ يَقُوْلُوْا  <حرف>بَحْرِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤٤">وَقَالُوْا فِي  <حرف>الْأُفْقَ</حرف>
        <حرف>أَفَقِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤٥">وَمِنْ الْعَرَبِ مَنْ يَقُوْلُ  <حرف>أُفُقِيٌّ</حرف> فَهُوَ عَلَى الْقِيَاسِ</مقطع>
    <مقطع رقم="٤٦">وَقَالُوْا فِي  <حرف>حَرُوْرَاءُ</حرف> وَهُوَ مَوْضِعٌ  <حرف>حَرُوْرِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤٧">وَفِي  <حرف>جَلُوْلاءَ</حرف> :  <حرف>جَلُوْلِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤٨">كَمَا قَالُوْا فِي  <حرف>خُرَاسَانَ</حرف> : <حرف>خُرْسِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٤٩">وَ<حرف>خُرَاسَانِيٌّ</حرف> أَكْثَرَ وَ<حرف>خُراسِيٌّ</حرف> لُغَةٌ</مقطع>
    <مقطع رقم="٥٠">وَقَالَ بَعْضُهُمْ  <حرف>إِبِلٌ حَمَضِيَّةٌ</حرف> إِذَا أَكَلَتِ الْحَمْضَ وَ<حرف>حَمْضيِّةٌ</حرف> أَجْوَدُ</مقطع>
    <مقطع رقم="٥١">وَقَدْ يُقَالُ  <حرف>بَعِيْرٌ حَامِضٌ وَعَاضَةٌ</حرف> إِذَا أَكَلَ الْعِضَاهَ وَهُوَ ضَرْبٌ مِنَ الشَّجَرِ</مقطع>
    <مقطع رقم="٥٢">وَ<حرف>حَمْضِيَّةٌ</حرف> أَجْوَدُ وَأَكْثَرُ وَأَقِيْسُ فِي كَلَامِهِمْ</مقطع>
    <مقطع رقم="٥٣">وَقَالَ بَعْضُهُمْ  <حرف>خَرْفِيٌّ</حرف> أَضَافَ إِلَى <حرف>الْخَرِيفِ</حرف> وَحَذَفَ الْيَاءَ</مقطع>
    <مقطع رقم="٥٤">وَ<حرف>الخَرْفِيُّ</حرف> فِي كَلَامِهِمْ أَكْثَرُ مِنْ  <حرف>الْخَرِيفِيُّ</حرف>
   </مقطع>
    <مقطع رقم="٥٥">إِمَّا أَضَافَهُ إِلَى  <حرف>الْخَرَفِ</حرف> وَإِمَّا بَنَى  <حرف>الْخَرِيفَ</حرف> عَلَى فِعْلٍ</مقطع>
    <مقطع رقم="٥٦">وَقَالُوْا  <حرف>إِبِلٌ طُلَاحِيَّةٌ</حرف> إِذَا أَكَلَتِ الطَّلْحَ</مقطع>
    <مقطع رقم="٥٧">وَقَالُوْا فِي  <حرف>عِضَاهٍ</حرف>
        <حرف>عِضَاهِيٌّ</حرف> فِي قَوْلِ مَنْ جَعَلَ الْوَاحِدَةَ  <حرف>عِضَاهةٌ</حرف>
   </مقطع>
    <مقطع رقم="٥٨">مِثْلَ  <حرف>قَتَادَةٍ</حرف> وَ<حرف>قَتَادٍ</حرف>
   </مقطع>
    <مقطع رقم="٥٩">وَ<حرف>الْعِضَاهَةُ</حرف> بِكَسْرِ الْعَيْنِ <هارون مجلد="3" صفحة="336"/>عَلَىَ الْقِيَاسِ</مقطع>
    <مقطع رقم="٦٠">فَأَمَّا مَنْ جَعَلَ جَمِيْعَ  <حرف>الْعِضَةِ</حرف>
        <حرف>عِضَوَاتِ</حرف> وَجَعَلَ الَّذِي ذَهَبَ الْوَاوُ</مقطع>
    <مقطع رقم="٦١">فَإِنَّهُ يَقُوْلُ  <حرف>عِضَوِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٦٢">وَأَمَّا مَنْ جَعَلَهُ بِمَنْزِلَةِ  <حرف>الْمِيَاهِ</حرف> وَجَعَلَ الْوَاحِدَةَ  <حرف>عِضَاهَةً</حرف>
