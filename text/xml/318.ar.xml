    <مقطع رقم="٢٨">وَ<حرف>الْبَادِيَة</حرف>
        <حرف>بَدَوِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٢٩">وَفِي  <حرف>الْبَصْرَةِ</حرف>
        <حرف>بَصْرِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٠">وَفِي  <حرف>السَّهْلِ</حرف>
        <حرف>سُهْلِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣١">وَفِي  <حرف>الدَّهْرِ</حرف>
        <حرف>دَهْرِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٢">وَفِي حَيٍّ مِنْ بَنِي عَدِيٍّ يُقَالُ لَهُمْ  <حرف>بَنُوْ عَبِيْدَةَ</حرف>
        <حرف>عُبَدِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٣">فَضَمُّوا الْعَيْنَ وَفَتَحُوا الْبَاءَ فَقَالُوَا  <حرف>عُبَدِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٤">وَحَدَّثَنَا مَنْ نَثِقُ بِهِ أَنَّ بَعْضَهُمْ يَقُوْلُ فِي بَنِيَ جَذِيْمَةَ  <حرف>جُذَمِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٥">فَيَضُمُّ الْجِيْمَ وَيُجْرِيهِ مُجْرَى  <حرف>عُبَدِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٦">وَقَالُوْا فِي بَنِي الْحُبْلَى مِنَ الْأَنْصَارِ  <حرف>حُبَلِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٧">وَقَالُوْا فِي  <حرف>صَنْعَاءَ</حرف>
        <حرف>صَنْعَانِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٨">وَفِي  <حرف>شِتَاءٍ</حرف>
        <حرف>شَتَوِيٌّ</حرف>
   </مقطع>
    <مقطع رقم="٣٩">وَفِي  <حرف>بَهْرَاءُ</حرف> قَبِيْلَةٌ مِنْ قُضَاعَةَ  <حرف>بَهْرَانِيٌّ</حرف>
