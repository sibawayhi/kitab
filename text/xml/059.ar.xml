<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٥٠"
     درنبورج="١-١٢٦"
     البكاء="١-٣٨٢"
     هارون="١-٢٩٩"
     يعقوب="١-٣٥٨"
     رقم="٥٩">

  <عنوان>
    <مقطع هوية='٤٧٩٦١'>هٰذَا بَاْبٌ مَعْنَى الْوَاْوِ فِيْهِ كَمَعْنَاْهَا فِي الْبَاْبِ الْأَوَّلِ</مقطع>
  </عنوان>
  <مقطع هوية='٩٥٧٥١'>إِلَّا أَنَّهَا تَعْطِفُ الِاسْمَ هُنَا عَلَى مَا لَا يَكُوْنُ مَا بَعْدَهُ إِلَّا رَفْعًا عَلَى كُلِّ حَاْل</مقطع>
  <مقطع هوية='٢٩٢٢٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='١٠٠٣٢'>أَنْتَ وَشَأْنُكَ</قول>
  </مقطع>
  <مقطع هوية='٤٩٩١٥'>وَ<قول هوية='٧٠٣٦٧'>كُلُّ رَجُلٍ وَضَيْعَتُهُ</قول>
  </مقطع>
  <مقطع هوية='٧٣١٩٥'>وَ<قول هوية='٧٦٣٣٧'>مَا أَنْتَ وَعَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٢٨٦٧٥'>وَ<قول هوية='٤٨٨٤٤'>كَيْفَ أَنْتَ وَقَصْعَةٌ مِنْ ثَرِيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٤٨٠٥٨'>وَ<قول هوية='٢٦٣٤٤'>مَا شَأْنُكَ وَشَأْنُ زَيْد</قول>
  </مقطع>
  <مقطع هوية='٠٠٩٦٥'>وَقَاْلَ المُخَبَّلُ</مقطع>
  <شاهدة هوية='٦٣٤٦٧'>
    <بيت>
      <مصراع>يَا زبْرِقَاْنُ أَخَاْ بَنِي خَلَفٍ</مصراع>
      <مصراع>مَا أَنْتَ وَيْبَ أَبِيْكَ وَالْفَخْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٥٤٩٠'>وَقَاْلَ جميْل</مقطع>
  <شاهدة هوية='٧٥٩٦٢'>
    <بيت>
      <مصراع>وَأَنْتَ امْرُؤٌ مِنْ أَهْلِ نَجْدٍ</مصراع>
      <مصراع>وَأَهْلُنَا تَهَاْمٍ فَمَا النَّجْدِيُّ وَالْمُتَغَوِّرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٨٣٣٦'>وَقَاْلَ</مقطع>
  <شاهدة هوية='١٩٠٦٩'>
    <بيت>
      <مصراع>وَكُنْتَ هُنَاْكَ أَنْتَ كَرِيْمَ</مصراع>
      <مصراع>قَيْسٍ فَمَا الْقَيْسيُّ بَعْدَكَ وَالْفِخَاْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٠٣٧١'>وَإِنَّمَا فُرِّقَ بَيْنَ هٰذَا وَبَيْنَ الْبَاْبِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٦٥٦٣٨'>لِأَنَّهُ اسْمٌ وَالْأَوَّلُ فِعْلٌ فَأُعْمِلَ</مقطع>
  <مقطع هوية='٦٤٦٩٣'>كَأَنَّكَ قُلْتَ فِي الْأَوَّلِ <قول هوية='٨١٢٣٥'>مَا صَنَعْتَ أخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٧٢٣٠'>وَهٰذَا مُحَاْلٌ وَلٰكِنْ أَرَدْتُ أَنْ أُمَثِّلَ لَكَ</مقطع>
  <مقطع هوية='٩٥٩٩٢'>وَلَوْ قُلْتَ <قول هوية='٢٨١٧٦'>مَا صَنَعْتَ مَعَ أَخِيْكَ</قول>
  </مقطع>
  <مقطع هوية='١٠٧٧٠'>وَ<قول هوية='١٤٧٤٠'>مَا زِلْتُ بِعَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='١٧١٥٩'>لَكَاْنَ <حرف>مَعَ أَخِيْكَ</حرف> وَ<حرف>بِعَبْدِ اللهِ</حرف> فِي مَوْضِع نَصْبٍ</مقطع>
  <مقطع هوية='٢٦٨٠٨'>وَلَوْ قُلْتَ <قول هوية='٥٦٦٤٦'>أَنْتَ وَشَأْنُكَ</قول>
  </مقطع>
  <مقطع هوية='٦٨٨٠٦'>كُنْتَ كَأَنَّكَ قُلْتَ <قول هوية='٩٣٣٣٧'>أَنْتَ وَشَأْنُكَ مَقْرُوْنَاْنِ</قول>
  </مقطع>
  <مقطع هوية='٩١٥٠٤'>وَ<قول هوية='٦٩٤٣٨'>كُلُّ امْرِئٍ وَضَيْعَتُهُ مَقْرُوْنَاْنِ</قول>
  </مقطع>
  <مقطع هوية='٥٣٩٤٧'>لِأَنَّ الْوَاْوُ فِي مَعْنَى <حرف>مَعَ</حرف> هُنَا</مقطع>
  <مقطع هوية='٥٨٨٨٩'>يَعْمَلُ فِيْمَا بَعْدَهَا مَا عَمِلَ فِيْمَا قَبْلَهَا مِنَ الِابْتِدَاْءِ وَالْمُبْتَدَإِ</مقطع>
  <مقطع هوية='٥٩٦٥٩'>وَمِثْلُهُ <قول هوية='٥٣٣٧٢'>أَنْتَ أَعْلَمُ وَمَاْلُكَ</قول>
  </مقطع>
  <مقطع هوية='٦٣٣٥٦'>فَإِنَّمَا أَرَدْتَ <قول هوية='٤٤٣١٤'>أَنْتَ أَعْلَمُ مَعَ مَاْلِكَ</قول>
  </مقطع>
  <مقطع هوية='٠٦١٢٧'>وَ<قول هوية='١٤٥٧٨'>أَنْتَ أَعْلَمُ وَعَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٩٩٨٧٦'>أَيْ <قول هوية='٥٧٣٤٩'>أَنْتَ أَعْلَمُ مَعَ عَبْدِ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٨٦٤٩٨'>وَإِنْ شِئْتَ كَاْنَ عَلَى الْوَجْهِ الْآخَرِ</مقطع>
  <مقطع هوية='٩٠٨٤٣'>كأَنَّكَ قُلْتَ <قول هوية='٥٩٦٥١'>أَنْتَ وَعَبْدُ اللهِ أَعْلَمُ مِنْ غَيْرِكُمَا</قول>
  </مقطع>
  <مقطع هوية='٩١٦٢٦'>فَإِنْ قُلْتَ <قول هوية='١٢٩٨٢'>أَنْتَ أَعْلَمُ وَعَبْدُ اللهِ</قول> فِي الْوَجْهِ الْآخَرِ</مقطع>
  <مقطع هوية='٨٠٥٥٨'>فَإِنَّهَا أَيْضًا تُعمِلُ فِيْمَا بَعْدَهَا الِابْتِدَاْءَ</مقطع>
  <مقطع هوية='٧٣٣٣٢'>كَمَا أَعْمَلْتَ فِي <قول هوية='٤٢٠٤٤'>مَا صَنَعْتَ وَأخَاْكَ</قول>
  <حرف>صَنَعْتَ</حرف>
  </مقطع>
  <مقطع هوية='٣٧٦٩٧'>فَعَلَى أَىِّ الْوَجْهَيْنِ وَجَّهْتَهُ صَاْرَ عَلَى الْمُبْتَدَإِ</مقطع>
  <مقطع هوية='٧٢٦٤٦'>لِأَنَّ الْوَاْوَ فِي الْمَعْنَيَيْنِ جَمِيْعًا يَعْمَلُ فِيْمَا بَعْدَهَا مَا عَمِلَ فِي الِاسْمِ الَّذِي تَعْطِفُهُ عَلَيْهِ</مقطع>
  <مقطع هوية='١٨٠٦٢'>وَكَذٰلِكَ <قول هوية='٢٨٨٢٧'>مَا أَنْتَ وَعَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٧٤٨٣٧'>وَ<قول هوية='١٣٢٢٩'>كَيْفَ أَنْتَ وَعَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٧١٠٤٥'>كَأَنَّكَ قُلْتَ <قول هوية='١٣١٨٤'>مَا أَنْتَ وَمَا عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٥٧٣٤٣'>وَأَنْتَ تُرِيْدُ أَنْ تُحَقِّرَ أَمْرَهُ أَوْ تَرْفَعُ أَمْرَهُ</مقطع>
  <مقطع هوية='١١٧٦٧'>وَكَذٰلِكَ <قول هوية='٢٦٣٥٣'>كَيْفَ أَنْتَ وَعَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٢١١٥٢'>وَأَنْتَ تُرِيْدُ أَنْ تَسْأَلَ عَنْ شأَنِهِمْا</مقطع>
  <مقطع هوية='٧٧٧٨٢'>لِأَنَّكَ إِنَّمَا تَعْطِفُ بِالْوَاْوِ إِذَا أَرَدْتَ مَعْنَى <حرف>مَعَ</حرف> عَلَى <حرف>كَيْفَ</حرف>
  </مقطع>
  <مقطع هوية='٢٥٤١٥'>وَ <حرف>كَيْفَ</حرف> بِمَنْزِلَةِ الِابْتِدَاْءِ</مقطع>
  <مقطع هوية='٨٦٦٠١'>كَأَنَّكَ قُلْتَ <قول هوية='٠٧٠٦٠'>وَكَيْفَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٠٩٧٦٢'>فَعَمِلَتْ كَمَا عَمِلَ الِابْتِدَاْءُ</مقطع>
  <مقطع هوية='٥٩٢٦٤'>لِأَنَّهَا لَيْسَتْ بِفِعْلٍ</مقطع>
  <مقطع هوية='٦٥٠٦٧'>وَ لِأَنَّ مَا بَعْدَهَا لَا يَكُوْنُ إِلَّا رَفْعًا</مقطع>
  <مقطع هوية='٦٢٧٣٨'>يَدُلُّكَ عَلَى ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ زِيَاْدٌ الأَعْجَمُ وَيُقَاْل غَيْرُهُ</مقطع>
  <شاهدة هوية='٩٩٥٩٢'>
    <بيت>
      <مصراع>تُكَلِّفُنِي سَوِيْقَ الْكَرْمِ جَرْمٌ</مصراع>
      <مصراع>وَمَا جَرْمٌ وَمَا ذَاْكَ السَّوِيْقُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٤٠٩٠'>أَلَا تَرَى أَنَّهُ يُرِيْدُ مَعْنَى <حرف>مَعَ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٤٦٩'>وَالِاسْمُ يَعْمَلُ فِيْهِ <حرف>مَاْ</حرف>
  </مقطع>
  <مقطع هوية='٧٦٠٤٧'>وَمِثْلُ ذٰلِكَ قَوْلُ الْعَرَبِ <قول هوية='٨٣٧٤٢'>إِنَّكَ مَا وَخَيْرًا</قول>
  </مقطع>
  <مقطع هوية='٧٣٧١٤'>تُرِيْدُ <قول هوية='٠٨٣٨٢'>إِنَّكَ مَعَ خَيْرٍ</قول>
  </مقطع>
  <مقطع هوية='٧٧٩٠٦'>وَقَاْلَ وَهُوَ لِأبِي عَنْتَرَةَ الْعَبَسِيّ</مقطع>
  <شاهدة هوية='٦٣٣٤١'>
    <بيت>
      <مصراع>فَمَنْ يَكُ سَاْئِلًا عَنِّي فَإِنِّي</مصراع>
      <مصراع>وَجِرْوَةَ لَا تَرُوْدُ وَلَا تُعَاْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٧٧٠٩'>فَهٰذَا كُلُّهُ يَنْتَصِبُ انْتِصَاْبَ <قول هوية='٧٠٦٦٧'>إِنِّي وَزَيْدًا مُنْطَلِقَاْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٧٢٦٣'>وَمَعْنَاْهُنّ <حرف>مَعَ</حرف>
  </مقطع>
  <مقطع هوية='٠٠٥٤٩'>لِأَنَّ <حرف>إِنِّي</حرف> هٰهُنَا بِمَنْزِلَةِ الِابْتِدَاْءِ</مقطع>
  <مقطع هوية='٣٢٧٧١'>لَيْسَتْ بِفِعْلٍ وَلَا اسْمٍ بِمَنْزِلَةِ الفِعْلِ</مقطع>
  <مقطع هوية='٨٣٧٥١'>وَ<قول هوية='١٦٢٠٢'>كَيْفَ أَنْتَ وَزَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٥١٣٠٧'>وَ<قول هوية='٦٦٨٦١'>أَنْتَ وَشَأْنُكَ</قول>
  </مقطع>
  <مقطع هوية='٤١٢٥٤'>مِثَاْلُهُمَا وَاحِدٌ</مقطع>
  <مقطع هوية='١٠٣٧٢'>لِأَنَّ الِابْتِدَاْءَوَ <حرف>كَيْفَ</حرف> وَ<حرف>مَا</حرف> وَ<حرف>أَنْتَ</حرف>
  </مقطع>
  <مقطع هوية='٦١٥٤٧'>يَعْمَلْنَ فِيْمَا كَاْنَ مَعْنَاْهُ <حرف>مَعَ</حرف> بَاْلرَّفْعِ</مقطع>
  <مقطع هوية='٨٠٥٠٥'>فَيَحْسُنُ وَيُحْمَلُ عَلَى الْمُبْتَدَإِ كَمَا يُحْمَلُ عَلَى الِابْتِدَاْءِ</مقطع>
  <مقطع هوية='٠٤٨٩١'>أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول هوية='٠٤٠٦٨'>مَا أَنْتَ وَمَا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٦١٢٣٨'>فَيَحْسُنُ</مقطع>
  <مقطع هوية='٤٠٠٢٨'>وَلَوْ قُلْتَ <قول هوية='٠٢٩٦٣'>مَا صَنَعْتَ وَمَا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٢٣٦٥٩'>لَمْ يَحْسُنْ وَلَمْ يستقِمْ إِذَا أَرَدْتَ مَعْنَى <قول هوية='٨٩٠٦٣'>مَا صَنَعْتَ وَزَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٤٥٨٠٦'>وَلَمْ يَكُنْ لَتَعْمَلُ <حرف>مَا أَنْتَ</حرف> وَ<حرف>كَيْفَ أَنْتَ</حرف> عَمَلَ <حرف>صَنَعْتَ</حرف>
  </مقطع>
  <مقطع هوية='٤٦٤٢٥'>وَلَيْسَتَا بِفِعْلٍ</مقطع>
  <مقطع هوية='١٣٠١١'>وَلَمْ نَرَهُمْ أَعْمَلُوْا شَيْئًا مِنْ هٰذَا كَذًا</مقطع>
  <مقطع هوية='٧٨١١٥'>فَإِذَا نَصَبْتَ فَكَأَنَّكَ قُلْتَ <قول هوية='٤٩٠٦٦'>مَا صَنَعْتَ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٦٥٤١٨'>مِثْلَ <قول هوية='٣٨١٩٠'>ضَرْبتَ زَيْدًا</قول> وَ<حرف>رَأَيْتَ</حرف>
  </مقطع>
  <مقطع هوية='١٦٤٠٦'>وَلَمْ نَرَ شَيْئًا مِنْ هٰذَا</مقطع>
  <مقطع هوية='٥١٩٥١'>لَيْسَ بِفِعْلٍ فُعِلَ بِهِ هٰذَا</مقطع>
  <مقطع هوية='٥٤١٤٥'>فَتُجْرِيْهِ مُجْرَى الْفِعْلِ</مقطع>
  <مقطع هوية='٧٢٦٠٥'>وَزَعَمَوْا أَنَّ نَاْسًا يَقُوْلُوْنَ <قول هوية='٥٥٨١٦'>كَيْفَ أَنْتَ وَزَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٢٠٨٧٧'>وَ<قول هوية='٩٨٣٥٠'>مَا أَنْتَ وَزَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٢٣٩٣٦'>وَهُوَ قَلِيْلٌ فِي كَلَاْمِ الْعَرَبِ</مقطع>
  <مقطع هوية='٨٣٦٠١'>وَلَمْ يَحْمِلُوْا الْكَلَاْمَ عَلَى <حرف>مَاْ</حرف> وَلَا <حرف>كَيْفَ</حرف>
