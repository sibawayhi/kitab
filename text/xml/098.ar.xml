<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٠١"
     درنبورج="١-١٧٠"
     البكاء="٢-١٣"
     هارون="١-٤٠٣"
     يعقوب="١-٤٧٢"
     رقم="٩٨">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يَنْتَصِبُ مِنَ الْأَمَاْكِنِ وَالْوَقْتِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذَاْكَ لَأَنَّهَا ظُرُوْفٌ فِيْهَا الْأَشْيَاْءُ وَتَكُوْنُ فِيْهَا</مقطع>
  <مقطع رقم="٣">فَانْتَصَبَ لِأَنَّهُ مَوْقُوْعٌ فِيْهَا وَمَكُوْنٌ فِيْهَا</مقطع>
  <مقطع رقم="٤">وَعَمِلَ فِيْهَا مَا قَبْلَهَا</مقطع>
  <مقطع رقم="٥">كَمَا أَنَّ الْـ<حرف>عِلْمَ</حرف> إِذَا قُلْتَ <قول رقم="١">أَنْتَ الرَّجُلُ عِلْمًا</قول>
  </مقطع>
  <مقطع رقم="٦">عَمِلَ فِيْهِ مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٧">وَكَمَا عَمِلَ فِي الـ<حرف>دِّرْهَمِ</حرف>
  <حرف>عِشْرُوْنَ</حرف> إِذَا قُلْتَ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٨">وَكَذٰلِكَ يَعْمَلُ فِيْهَا مَا بَعْدَهَا وَمَا قَبْلَهَا</مقطع>
  <مقطع رقم="٩">فَالْمَكَاْنُ قَوْلُكَ <قول مثال="١" رقم="٢">هُوَ خَلْفَكَ</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٣">هُوَ قُدَّاْمَكَ</قول> وَ<حرف>أَمَاْمَكَ</حرف>
  </مقطع>
  <مقطع رقم="١١">وَ<قول رقم="٤">هُوَ تَحْتَكَ</قول> وَ<حرف>قُبَاْلَتَكَ</حرف>
  </مقطع>
  <مقطع رقم="١٢">وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
  <مقطع رقم="١٣">وَمِنْ ذٰلِكَ قَوْلُكَ أَيْضًا</مقطع>
  <مقطع رقم="١٤">
    <قول رقم="٥">هُوَ نَاْحِيَةً مِنَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٥">وَ<قول رقم="٦">هُوَ نَاْحِيَةَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٦">وَ<قول رقم="٧">هُوَ نَاْحِيَتَكَ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَ<قول رقم="٨">هُوَ نَحْوَك</قول>
  </مقطع>
  <مقطع رقم="١٨">وَ<قول رقم="٩">هُوَ مَكَاْنًا صَاْلِحًا</قول>
  </مقطع>
  <مقطع رقم="١٩">وَ<قول رقم="١٠">دَاْرُهُ ذَاْتَ الْيَمِيْنِ وَشَرْقِيَّ كَذًا</قول>
  </مقطع>
  <مقطع رقم="٢٠">قَاْلَ الشَّاْعِرُ وَهُوَ جَرِيْرُ</مقطع>
  <شاهدة رقم="١" xml:id="٩٨-1">
    <بيت>
      <مصراع>هَبَّتْ جَنُوْبًا فَذِكْرَى مَا ذَكَرْتُكُمُ</مصراع>
      <مصراع>عِنْدَ الصَّفَاْةِ الَّتِي شَرْقِيَّ حَوْرَاْنًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢١">وَقَاْلُوْا <قول رقم="١١">مَنَاْزِلُهُمْ يَمِيْنًا</قول> وَ<حرف>يَسَاْرًا</حرف> وَ<حرف>شِمَاْلًا</حرف>
  </مقطع>
  <مقطع رقم="٢٢">قَاْلَ الشَّاْعِرُ وَهُوَ عَمْرُو بْنُ كُلْثُوْمِ</مقطع>
  <هارون مجلد="١" صفحة="٤٠٤"/>
  <شاهدة رقم="٢" xml:id="٩٨-2">
    <بيت>
      <مصراع>صَدَدْتِ الْكَأْسَ عَنَّا أُمَّ عَمْرٍو</مصراع>
      <مصراع>وَكَاْنَ الْكَأْسُ مَجْرَاْهَا الْيَمِيْنَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٣">أِيْ عَلَى ذَاْتِ الْيَمِيْنِ</مقطع>
  <مقطع رقم="٢٤">حَدَّثَنَا بِذٰلِكَ يُوْنُسُ عِنْ أَبِي عَمْرٍو وَهُوَ رَأْيُهُ</مقطع>
  <مقطع رقم="٢٥">وَتَقُوْلُ <قول رقم="١٢">هُوَ قَصْدَكَ</قول>
  </مقطع>
  <مقطع رقم="٢٦">كَمَا قَاْلَ الشَّاْعِرُ وَسَمِعْنَا بَعْضَ الْعَرَبِ يُنْشِدُهُ كَذَا</مقطع>
  <شاهدة رقم="٣" xml:id="٩٨-3">
    <بيت>
      <مصراع>سَرَى بَعْدَ مَا غَاْرَ الثُّرَيَّا وَبَعْدَمًا</مصراع>
      <مصراع>كَأَنَّ الثُّرَيَّا حِلَّةَ الْغَوْرِ مُنْخلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٧">أَيْ قَصْدَهُ</مقطع>
  <مقطع رقم="٢٨">يُقَاْلُ <قول رقم="١٣">هُوَ حِلَّةَ الْغَوْرِ</قول> أَيْ قَصْدَهُ</مقطع>
  <مقطع رقم="٢٩">سَمِعْنَا ذٰلِكَ مِمَّنْ يُوْثَقُ بِهِ مِنَ الْعَرَبِ</مقطع>
  <مقطع رقم="٣٠">وَيُقَاْلُ <قول رقم="١٤">هُمَا خَطَّاْنِ جَنَاْبَتَيْ أَنْفِهَا</قول> يَعْنِي الْخَطَّيْنِ اللَّذَيْنِ اكْتَنَفَا جَنْبَيْ أَنْفِ الظَّبْيَةِ</مقطع>
  <مقطع رقم="٣١">وَقَاْلَ الشَّاعِرُ وَهُوَ الْأَعْشَى</مقطع>
  <شاهدة رقم="٤" xml:id="٩٨-4">
    <بيت>
      <مصراع>نَحْنُ الْفَوَاْرِسُ يَوْمَ الْحِنْوِ ضَاْحِيَةً</مصراع>
      <مصراع>جَنْبَيْ فَُطَيْمَةَ لَا مِيْلٌ وَلَا عُزُلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٢">فَهٰذَا كُلُّهُ انْتَصَبَ عَلَى مَا هُوَ فِيْهِ وَهُوَ غَيْرُهُ</مقطع>
  <مقطع رقم="٣٣">وَصَاْرَ بِمَنْزِلَةِ الْمُنَوَّنِ الَّذِي يَعْمَلُ فِيْمَا بَعْدَهُ</مقطع>
  <مقطع رقم="٣٤">نَحْوِ <حرف>عِشْرِيْنَ</حرف> وَنَحْوِ قَوْلِهِ <قول رقم="١٥">هُوَ خَيْرٌ مِنْكَ عَمَلًا</قول>
  </مقطع>
  <مقطع رقم="٣٥">فَصَاْرَ <قول رقم="١٦">هُوَ خَلْفَكَ</قول> وَ<قول رقم="١٧">زَيْدٌ خَلْفَكَ</قول> بِمَنْزِلَةِ ذٰلِكَ</مقطع>
  <مقطع رقم="٣٦">وَالْعَاْمِلُ فِي <حرف>خَلْفٍ</حرف> الَّذِي هُوَ مَوْضِعٌ لَهُ وَالَّذِي هُوَ فِي مَوْضِعِ خَبَرِهِ</مقطع>
  <مقطع رقم="٣٧">كَمَا أَنَّكَ إِذَا قُلْتَ <قول رقم="١٨">عَبْدُ اللّٰهِ أَخُوْكَ</قول> فَالْآخِرُ قَدْ رَفَعَهُ الْأَوَّلُ وَعَمِلَ فِيْهِ</مقطع>
  <مقطع رقم="٣٨">وَبِهِ اسْتَغْنَى الْكَلَاْمُ وَهُوَ مُنْفَصِلٌ مِنْهُ</مقطع>
  <مقطع رقم="٣٩">وَمِنْ ذٰلِكَ قَوْلُ الْعَرَبِ <قول رقم="١٩">هُوَ مَوْضِعَهُ</قول>
  </مقطع>
  <مقطع رقم="٤٠">وَ<قول رقم="٢٠">هُوَ مَكَاْنَهُ</قول>
  </مقطع>
  <مقطع رقم="٤١">وَ<قول رقم="٢١">َهٰذَا مَكَاْنَ هٰذَا</قول>
  </مقطع>
  <مقطع رقم="٤٢">وَ<قول رقم="٢٢">هٰذَا رَجُلٌ مَكَاْنَكَ</قول> إِذَا أَرَدْتَ الْبَدَلَ</مقطع>
  <مقطع رقم="٤٣">كأَنَّكَ قُلْتَ <قول رقم="٢٣">هٰذَا فِي مكَاْنِ ذا</قول>
  </مقطع>
  <مقطع رقم="٤٤">وَ<قول رقم="٢٤">هٰذَا رَجُلٌ فِي مكَاْنَكِ</قول>
  </مقطع>
  <مقطع رقم="٤٥">وَيُقَاْلُ لِلرَّجُلِ <قول رقم="٢٥">اِذْهَبْ مَعَكَ بِفُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٤٦">فَيَقُوْلُ <قول رقم="٢٦">مَعِي رَجُلٌ مَكَاْنَ فُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٤٧">أَيْ <حرف>مَعِي رَجُلٌ</حرف> يَكُوْنُ بَدَلًا مِنْهُ وَيُغنِي غَنَاْءَهُ وَيَكُوْنُ فِي مَكَاْنِهِ</مقطع>
  <مقطع رقم="٤٨">وَاعْلَمْ أَنَّ هٰذِهِ الْأَشْيَاْءَ كُلَّهَا انْتِصَاْبُهَا مِنْ وَجْهٍ وَاْحِدٍ</مقطع>
  <مقطع رقم="٤٩">وَمِثْلُ ذٰلِكَ <قول رقم="٢٧">هُوَ صَدَدَكَ</قول> وَ<قول رقم="٢٨">هُوَ سَقَبَكَ</قول> وَ<قول رقم="٢٩">هُوَ قُرْبَكَ</قول>
  </مقطع>
  <مقطع رقم="٥٠">وَاعْلَمْ أَنَّ هٰذِهِ الْأَشْيَاْءَ كُلَّهَا قَدْ تَكُوْنُ أَسْمَاْءً غَيْرَ ظُرُوْفٍ بِمَنْزِلَةِ <حرف>زَيْدٍ</حرف> وَ<حرف>عَمْرٍو</حرف>
  </مقطع>
  <مقطع رقم="٥١">سَمِعْنَا مِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول رقم="٣٠">دَاْرُكَ ذَاْتُ الْيَمِيْنِ</قول>
  </مقطع>
  <مقطع رقم="٥٢">وَقَاْلَ الشَّاعِرُ وَهُوَ لَبيَد</مقطع>
  <شاهدة رقم="٥" xml:id="٩٨-5">
    <بيت>
      <مصراع>فَغَدَتْ كِلَا الْفَرْجَيْنِ تَحْسَبُ أَنَّهُ</مصراع>
      <مصراع>مَوْلَى الْمَخَاْفَةِ خَلْفُهَا وَأَمَاْمُهًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٣">وَمِنْ ذٰلِكَ أَيْضًا <قول رقم="٣١">هٰذَا سَوَاْءَكَ</قول> وَ<قول رقم="٣٢">هٰذَا رَجُلٌ سَوَاْءَكَ</قول>
  </مقطع>
  <مقطع رقم="٥٤">فَهٰذَا بِمَنْزِلَةِ <حرف>مَكَاْنَكَ</حرف> إِذَا جَعَلْتَهُ فِي مَعْنِى <حرف>بَدَلَك</حرف>
  </مقطع>
  <مقطع رقم="٥٥">وَلَا يَكُوْنُ اسْمًا إِلَّا فِي الشِّعْرِ</مقطع>
  <مقطع رقم="٥٦">قَاْلَ بَعْضُ الْعَرَبِ لَمَّا اضْطُرَّ فِي الشِّعْرِ جَعَلَهُ مَنْزِلَةِ <حرف>غَيْرٍ</حرف>
  </مقطع>
  <مقطع رقم="٥٧">قَاْلَ الشَّاْعِرُ وَهُوَ رَجُلٌ مِنَ الْأَنْصَاْرِ</مقطع>
  <هارون مجلد="١" صفحة="٤٠٧"/>
  <شاهدة رقم="٦" xml:id="٩٨-6">
    <بيت>
      <مصراع>وَلَا يَنْطِقُ الْفَحْشَاْءَ مَنْ كَاْنَ مِنْهُمُ</مصراع>
      <مصراع>إِذَا قَعَدُوْا مِنَّا وَلَا مِنْ سَوَاْئِنًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٨">وَقَاْلَ الْآخَرُ وَهُوَ الْأَعْشَى</مقطع>
  <شاهدة رقم="٧" xml:id="٩٨-7">
    <بيت>
      <مصراع>تَجَاْنَفُ عَنْ جَوِّ الْيَمَاْمَةِ نَاْقَتِي</مصراع>
      <مصراع>وَمَا قَصَدَتْ مِنْ أَهْلِهَا لِسَوَاْئِكًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٩">وَمِثْلُ ذٰلِكَ <قول رقم="٣٣">أَنْتَ كَعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٦٠">كَأَنَّهُ يَقُوْلُ أَنْتَ كَعَبْدِ اللّٰهِ أَيْ أَنْتَ فِي حَاْلٍ كَعَبْدِ اللّٰهِ</مقطع>
  <مقطع رقم="٦١">فَأُجْرِيَ مُجْرَى <حرف>بِعَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="٦٢">إِلَّا أَنَّ نَاْسًا مِنَ الْعَرَبِ إِذَا اضْطُرُّوْا فِي الشِّعْرِ جَعَلُوْهَا بِمَنْزِلَةِ <حرف>مِثْلٍ</حرف>
  </مقطع>
  <مقطع رقم="٦٣">قَاْلَ الرَّاْجِزُ وَهُوَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة رقم="٨" xml:id="٩٨-8">
    <بيت>
      <مصراع>فَصُيَّرُوْا مِثْلَ كَعَصْفٍ مَأْكُوْلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٤">وَقَاْلَ خِطَاْمٌ الْمُجَاْشِعِى</مقطع>
  <شاهدة رقم="٩" xml:id="٩٨-9">
    <بيت>
      <مصراع>وَصَاْلِيَاْتٍ كَكَمَا يُؤَثْفِيْنْ</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٤٠٨"/>
  <مقطع رقم="٦٥">وَيَدُلُّكَ عَلَى أَنَّ <حرف>سَوَاْءَكَ</حرف> وَ<حرف>كَزَيْدٍ</حرف> بِمَنْزِلَةِ الظُّرُوْفِ أَنَّكَ تَقُوْلُ <قول رقم="٣٤">مَرَرْتُ بِمَنْ سَوَاْءَكَ</قول> وَ<حرف>عَلَى مَنْ سَوَاْءَكَ</حرف> وَ<حرف>الَّذِي كَزَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٦٦">فَحَسُنَ هٰذَا كَحُسْنِ <حرف>مَنْ</حرف> فِيْهَاوَ<حرف>الَّذِي</حرف> فِيْهَا</مقطع>
  <مقطع رقم="٦٧">وَلَا تَحْسُنُ الْأَسْمَاْءُ هٰهُنَا وَلَا تَكْثُرُ فِي الْكَلَاْمِ</مقطع>
  <مقطع رقم="٦٨">لَوْ قُلْتَ <قول رقم="٣٥">مَرَرْتُ بِمَنْ فَاْضِلٌ</قول> أَوْ <حرف>الَّذِي صَاْلِحٌ</حرف> كَاْنَ قَبِيْحًا</مقطع>
  <مقطع رقم="٦٩">فَهٰكَذَا مَجْرَى <حرف>كَزَيْدٍ</حرف> وَ<حرف>سَوَاْءَكَ</حرف>
  </مقطع>
  <مقطع رقم="٧٠">وَتَقُوْلُ <قول رقم="٣٦">كَيْفَ أَنْتَ إِذَا أُقْبِلَ قُبْلُكَ وَنُحِيَ نَحْوُكَ</قول>
  </مقطع>
  <مقطع رقم="٧١">كَأَنَّهُ قَاْلَ <قول رقم="٣٧">كَيْفَ أَنْتَ إِذَا أُرِيْدَتْ نَاْحِيَتُكَ</قول>
  </مقطع>
  <مقطع رقم="٧٢">وَإِذَا أُرِيْدَ <قول رقم="٣٨">مَا عِنْدَكَ</قول> حِيْنَ قَاْلَ <حرف>إِذَا نُحِيَ نَحْوُكَ</حرف>
  </مقطع>
  <مقطع رقم="٧٣">وَأَمَّا حِيْنَ قَاْلَ <قول رقم="٣٩">أُقْبِلَ قُبْلُكَ</قول> فَكَأَنَّهُ قَاْلَ <قول رقم="٤٠">كَيْفَ أَنْتَ إِذَا أُقْبِلَ النَّقْبَ الرَّكَاْبُ</قول>
  </مقطع>
  <مقطع رقم="٧٤">جَعَلَهُمَا اسْمَيْنِ</مقطع>
  <مقطع رقم="٧٥">وَزَعَم الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّ النَّصْبَ جَيِّدٌ إِذَا جَعَلَهُ ظَرْفًا</مقطع>
  <مقطع رقم="٧٦">وَهُو بِمَنْزِلَةِ قَوْلِ الْعَرَبِ <قول رقم="٤١">هُوَ قَرِيْبٌ مِنْكَ</قول> وَ<قول رقم="٤٢">هُوَ قَرِيْبًا مِنْكَ</قول> أَيْ <قول رقم="٤٣">مَكَاْنًا قَرِيْبًا مِنْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٧">حَدَّثَنَا يُوْنُسُ أَنَّ الْعَرَبَ تَقُوْلُ فِي كَلَاْمِهَا <قول رقم="٤٤">هَلْ قَرِيْبًا مِنْكَ أَحَدٌ</قول>
  </مقطع>
  <مقطع رقم="٧٨">كَقَوْلِهِمْ <قول رقم="٤٥">هَلْ قُرْبَكَ أَحَدٌ</قول>
  </مقطع>
  <مقطع رقم="٧٩">وَأَمَّا <حرف>دُوْنَكَ</حرف> فَإِنَّهُ لَا يُرْفَعُ أَبَدًا</مقطع>
  <مقطع رقم="٨٠">وَإِنْ قُلْتَ <قول رقم="٤٦">هُوَ دُوْنَكَ فِي الشَّرَفِ</قول>
  </مقطع>
  <مقطع رقم="٨١">لِأَنَّ هٰذَا إِنَّمَا هُوَ مَثَلٌ</مقطع>
  <مقطع رقم="٨٢">كَمَا كَاْنَ <قول رقم="٤٧">هٰذَا مَكَاْنَ ذًا</قول> فِي الْبَدَلِ مَثَلًا</مقطع>
  <مقطع رقم="٨٣">وَلٰكِنَّهُ عَلَى السَّعَةِ</مقطع>
  <مقطع رقم="٨٤">وَإِنَّمَا الْأَصْلُ فِي الظُّرُوْفِ الْمَوْضِعُ وَالْمُسْتَقَرُّ مِنَ الْأَرْضِ</مقطع>
  <مقطع رقم="٨٥">وَلٰكِنَّهُ جَاْزَ هٰذَا كَمَا تَقُوْلُ <قول رقم="٤٨">إِنَّهُ لَصُلْبُ الْقَنَاْةِ</قول>
  </مقطع>
  <مقطع رقم="٨٦">وَ<قول رقم="٤٩">إِنَّهُ لَمِنْ شَجَرَةٍ صَاْلِحَةٍ</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَلٰكِنَّهُ عَلَى السَّعَةِ</مقطع>
  <مقطع رقم="٨٨">وَأَمَّا <قول رقم="٥٠">قُصِدَ قَصْدُكَ</قول>
  </مقطع>
  <مقطع رقم="٨٩">فَمِثْلُ <قول رقم="٥١">نُحِى نَحْوُكَ</قول> وَ<قول رقم="٥٢">أُقْبِلَ قُبْلُكَ</قول>
  </مقطع>
  <مقطع رقم="٩٠">يَرْتَفِعُ كَمَا يَرْتَفِعَاْنِ وَيَنْتَصِبُ كَمَا يَنْتَصِبَاْنِ</مقطع>
  <مقطع رقم="٩١">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٥٣">هُوَ دُوْنُكَ</قول> إِذَا جَعَلْتَ الْأَوَّلَ الْآخِرَ وَلَمْ تَجْعَلْهُ رَجُلًا</مقطع>
  <مقطع رقم="٩٢">وَقَدْ يَقُوْلُوْنَ <قول رقم="٥٤">هُوَ دُوْنٌ</قول> فِي غَيْرِ الْإِضَاْفَةِ</مقطع>
  <مقطع رقم="٩٣">أَيْ <قول رقم="٥٥">هُوَ دُوْنٌ مِنَ الْقَوْمِ</قول>
  </مقطع>
  <مقطع رقم="٩٤">وَ<قول رقم="٥٦">هٰذَا ثَوْبٌ دُوْنٌ</قول> إِذَا كَاْنَ رَدِيْئًا</مقطع>
  <مقطع رقم="٩٥">وَاعْلَمْ أَنَّهُ لَيْسَ كُلُّ مَوْضِعٍ وَلَا كُلُّ مَكَاْنٍ يَحْسُنُ أَنْ يَكُوْنَ ظَرْفًا</مقطع>
  <مقطع رقم="٩٦">فَمِمَّا لَا يَحْسُنُ أَنْ يَكُوْنَ ظَرْفًا أَنَّ الْعَرَبَ لَا تَقُوْلُ <قول رقم="٥٧">هُوَ جَوْفَ الْمَسْجِدِ</قول>
  </مقطع>
  <مقطع رقم="٩٧">وَلَا <قول رقم="٥٨">هُوَ دَاْخِلَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٩٨">وَلَا <قول رقم="٥٩">هُوَ خَاْرِجَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٩٩">حَتَّى تَقُوْلُ <قول رقم="٦٠">هُوَ فِي جَوْفِهَا</قول>
  </مقطع>
  <مقطع رقم="١٠٠">وَ <حرف>فِي دَاْخِلِ الدَّاْرِ</حرف> وَ<حرف>مِنْ خَاْرِجِهَا</حرف>
  </مقطع>
  <مقطع رقم="١٠١">وَإِنَّمَا فَُرِّقَ بَيْنَ <حرف>خَلْفَ</حرف> وَمَا أَشْبَهَهَا وَبَيْنَ هٰذِهِ الْحُرُوْفِ</مقطع>
  <مقطع رقم="١٠٢">لِأَنَّ <حرف>خَلْفَ</حرف> وَمَا أَشْبَهَهَا لِلْأَمَاْكِنِ الَّتِي تَلِي الْأَسْمَاْءَ مِنْ أَقْطَاْرِهَا</مقطع>
  <مقطع رقم="١٠٣">عَلَى هٰذَا جَرَتْ عِنْدَهُمْ</مقطع>
  <مقطع رقم="١٠٤">وَالْجَوْفُ وَالْخَاْرِجُ عِنْدَهُمْ بِمَنْزِلَةِ الظَّهْرِ وَالْبَطْنِ وَالرَّأْسِ وَالْيَدِ</مقطع>
  <مقطع رقم="١٠٥">وَصَاْرَتْ <حرف>خَلْفَ</حرف> وَمَا أَشْبَهَهَا تَدْخُلُ عَلَى كُلِّ اسْمٍ فَتَصِيْرُ أَمْكِنَةً تَلِي الِاسْمَ مِنْ نَوَاْحِيْهِ وَأَقْطَاْرِهِ وَمِنْ أَعْلَاْهُ وَأَسْفَلِهِ</مقطع>
  <مقطع رقم="١٠٦">وَتَكُوْنُ ظُرُوْفًا كَمَا وَصَفْتُ لَكَ</مقطع>
  <مقطع رقم="١٠٧">وَتَكُوْنُ أَسْمَاْءً كَقَوْلِكَ <قول رقم="٦١">هُوَ نَاْحِيَةُ الدَّاْرِ</قول> إِذَا أَرَدْتَ النَّاْحِيَةَ بِعَيْنِهَا</مقطع>
  <مقطع رقم="١٠٨">وَ<قول رقم="٦٢">هُوَ فِي نَاْحِيَةِ الدَّاْرِ</قول> فَتَصِيْرُ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٦٣">هُوَ فِي بَيْتِكَ</قول> وَ<حرف>فِي دَاْرِكَ</حرف>
  </مقطع>
  <مقطع رقم="١٠٩">وَيَدُلُّكَ عَلَى أَنَّ الْمَجْرُوْرَ بِمَنْزِلَةِ الِاسْمِ غَيْرِ الظَّرْفِ أَنَّكَ تَقُوْلُ <قول رقم="٦٤">زَيْدٌ وَسْطَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١١٠">وَ<قول رقم="٦٥">ضَرَبْتُ وَسَطَهُ</قول>
  </مقطع>
  <مقطع رقم="١١١">وَتَقُوْلُ <حرف>فِي وَسَطِ الدَّاْرِ</حرف> فِيَصِيْرُ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٦٦">ضَرَبْتُ وَسَطَهُ</قول> مَفْتُوْحًا مِثْلَهُ</مقطع>
  <مقطع رقم="١١٢">وَاعْلَمْ أَنَّ الظُّرُوْفَ بَعْضُهَا أَشَدُّ تَمَكُّنًا مِنْ بَعْضٍ فِي الْأَسْمَاْءِ نَحْوَ الْقُبْلِ وَالْقَصْدِ وَالنَّاْحِيَةِ</مقطع>
  <مقطع رقم="١١٣">وَأَمَّا الْخَلْفُ وَالْأَمَاْمُ وَالتَّحْتُ فَهُنَّ أَقَلُّ اسْتِعْمَاْلًا فِي الْكَلَاْمِ أَنْ تُجْعَلُ أَسْمَاْءً</مقطع>
  <مقطع رقم="١١٤">وَقَدْ جَاْءَتْ عَلَى ذٰلِكَ فِي الْكَلَاْمِ وَالْأَشْعَاْرِ</مقطع>
  <مقطع رقم="١١٥">وَهٰذِهِ حُرْوُفُ تَجْرِي مَجْرَى <حرف>خَلْفَكَ</حرف> وَ<حرف>أَمَاْمَكَ</حرف>
  </مقطع>
  <مقطع رقم="١١٦">وَلٰكِنَّا عَزَلْنَاْهَا لِنُفَسِّرَ مَعَاْنِيْهَا لِأَنَّهَا غَرَاْئِبُ</مقطع>
  <مقطع رقم="١١٧">فَمِنْ ذٰلِكَ حَرْفَاْنِ ذَكَرْنَاْهُمَا فِي الْبَاْبِ الْأَوَّلِ ثُمَّ لَمْ نُفَسِّرْ مَعْنَاْهُمَا وَهُمَا <حرف>صَدَدَكَ</حرف> وَمَعْنَاْهُ الْقَصْدُ</مقطع>
  <مقطع رقم="١١٨">وَ <حرف>سَقَبَكَ</حرف> وَمَعْنَاْهُ الْقُرْبُ</مقطع>
  <مقطع رقم="١١٩">وَمِنْهُ قَوْلُ الْعَرَبِ <قول رقم="٦٧">هُوَ وَزْنَ الْجَبَلِ</قول> أَيْ نَاْحِيَةً مِنْهُ</مقطع>
  <مقطع رقم="١٢٠">وَ<قول رقم="٦٨">هُوَ زِنَةَ الْجَبَلِ</قول> أَيْ حِذَاْءَهُ</مقطع>
  <مقطع رقم="١٢١">وَمِن ذٰلِكَ قَوْلُ الْعَرَبِ <قول رقم="٦٩">هُمْ قُرَاْبَتَكَ</قول> أَيْ قُرْبَكَ يَعْنِي الْمَكَاْنَ</مقطع>
  <هارون مجلد="١" صفحة="٤١١"/>
  <مقطع رقم="١٢٢">وَ<قول رقم="٧٠">هُمْ قُرَاْبَتَكَ فِي الْعِلْمِ</قول> أَيْ <قول رقم="٧١">قَرِيْبًا مِنْكَ فِي الْعِلْمِ</قول>
  </مقطع>
  <مقطع رقم="١٢٣">وَكَاْنَ هٰذَا بِمَنْزِلَةِ قَوْلِ الْعَرَبِ</مقطع>
  <مقطع رقم="١٢٤">
    <قول رقم="٧٢">هُوَ حِذَاْءَهُ (وَإِزَاْءَهُ وَحَوَاْلَيْهِ) بَنُو فَُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="١٢٥">وَ<قول رقم="٧٣">قَوْمُكَ أَقْطَاْرَ الْبِلَاْدِ</قول>
  </مقطع>
  <مقطع رقم="١٢٦">وَمِنْ ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ أَبُو حَيَّةَ النُّمَيْرِيّ</مقطع>
  <شاهدة رقم="١٠" xml:id="٩٨-10">
    <بيت>
      <مصراع>إِذَا مَا نَعَشْنَاْهُ عَلَى الرَّحْلِ يَنْثَنِي</مصراع>
      <مصراع>مُسَاْلَيْهِ عَنْهُ مَنْ وَِرَاْءٍ وَمُقْدَمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٢٧">وَ <حرف>مُسَاْلَاْهُ</حرف> عِطْفَاْهُ بِمَنْزِلَةِ <حرف>جَنْبَيْ فَُطَيْمَةَ</حرف>
  </مقطع>

