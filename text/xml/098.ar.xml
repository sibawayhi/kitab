<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٠١"
     درنبورج="١-١٧٠"
     البكاء="٢-١٣"
     هارون="١-٤٠٣"
     يعقوب="١-٤٧٢"
     رقم="٩٨">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يَنْتَصِبُ مِنَ الْأَمَاْكِنِ وَالْوَقْتِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذَاْكَ لَأَنَّهَا ظُرُوْفٌ تَقَعُ فِيْهَا الْأَشْيَاْءُ وَتَكُوْنُ فِيْهَا</مقطع>
  <مقطع رقم="٣">فَانْتَصَبَ لِأَنَّهُ مَوْقُوْعٌ فِيْهَا وَمَكُوْنٌ فِيْهَا</مقطع>
  <مقطع رقم="٤">وَعَمِلَ فِيْهَا مَا قَبْلَهَا</مقطع>
  <مقطع رقم="٥">كَمَا أَنَّ الْـ<حرف>عِلْمَ</حرف> إِذَا قُلْتَ <قول رقم="١">أَنْتَ الرَّجُلُ عِلْمًا</قول>
  </مقطع>
  <مقطع رقم="٦">عَمِلَ فِيْهِ مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٧">وَكَمَا عَمِلَ فِي الـ<حرف>دِّرْهَمِ</حرف>
  <حرف>عِشْرُوْنَ</حرف> إِذَا قُلْتَ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٨">وَكَذٰلِكَ يَعْمَلُ فِيْهَا مَا بَعْدَهَا وَمَا قَبْلَهَا</مقطع>
  <مقطع رقم="٩">فَالْمَكَاْنُ قَوْلُكَ <قول رقم="٢" مثال="١">هُوَ خَلْفَكَ</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٣">هُوَ قُدَّاْمَكَ</قول> وَ<حرف>أَمَاْمَكَ</حرف>
  </مقطع>
  <مقطع رقم="١١">وَ<قول رقم="٤">هُوَ تَحْتَكَ</قول> وَ<حرف>قُبَاْلَتَكَ</حرف>
  </مقطع>
  <مقطع رقم="١٢">وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
  <مقطع رقم="١٣">وَمِنْ ذٰلِكَ قَوْلُكَ أَيْضًا</مقطع>
  <مقطع رقم="١٤">
    <قول رقم="٥">هُوَ نَاْحِيَةً مِنَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٥">وَ<قول رقم="٦">هُوَ نَاْحِيَةَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٦">وَ<قول رقم="٧">هُوَ نَاْحِيَتَكَ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَ<قول رقم="٨">هُوَ نَحْوَك</قول>
  </مقطع>
  <مقطع رقم="١٨">وَ<قول رقم="٩">هُوَ مَكَاْنًا صَاْلِحًا</قول>
  </مقطع>
  <مقطع رقم="١٩">وَ<قول رقم="١٠">دَاْرُهُ ذَاْتَ الْيَمِيْنِ وَشَرْقِيَّ كَذًا</قول>
  </مقطع>
  <مقطع رقم="٢٠">قَاْلَ الشَّاْعِرُ وَهُوَ جَرِيْرُ</مقطع>
  <شاهدة مقطع="٢١" رقم="١">
    <بيت>
      <مصراع>هَبَّتْ جَنُوْبًا فَذِكْرَى مَا ذَكَرْتُكُمُ</مصراع>
      <مصراع>عِنْدَ الصَّفَاْةِ الَّتِي شَرْقِيَّ حَوْرَاْنَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٢">وَقَاْلُوْا <قول رقم="١١">مَنَاْزِلُهُمْ يَمِيْنًا</قول> وَ<حرف>يَسَاْرًا</حرف> وَ<حرف>شِمَاْلًا</حرف>
  </مقطع>
  <مقطع رقم="٢٣">قَاْلَ الشَّاْعِرُ وَهُوَ عَمْرُو بْنُ كُلْثُوْمِ</مقطع>
  <شاهدة مقطع="٢٤" رقم="٢">
    <بيت>
      <مصراع>صَدَدْتِ الْكَأْسَ عَنَّا أُمَّ عَمْرٍو</مصراع>
      <مصراع>وَكَاْنَ الْكَأْسُ مَجْرَاْهَا الْيَمِيْنَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٥">أَيْ عَلَى ذَاْتِ الْيَمِيْنِ</مقطع>
  <مقطع رقم="٢٦">حَدَّثَنَا بِذٰلِكَ يُوْنُسُ عِنْ أَبِي عَمْرٍو وَهُوَ رَأْيُهُ</مقطع>
  <مقطع رقم="٢٧">وَتَقُوْلُ <قول رقم="١٢">هُوَ قَصْدَكَ</قول>
  </مقطع>
  <مقطع رقم="٢٨">كَمَا قَاْلَ الشَّاْعِرُ وَسَمِعْنَا بَعْضَ الْعَرَبِ يُنْشِدُهُ كَذَا</مقطع>
  <شاهدة مقطع="٢٩" رقم="٣">
    <بيت>
      <مصراع>سَرَى بَعْدَ مَا غَاْرَ الثُّرَيَّا وَبَعْدَمَا</مصراع>
      <مصراع>كَأَنَّ الثُّرَيَّا حِلَّةَ الْغَوْرِ مُنْخُلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٠">أَيْ قَصْدَهُ</مقطع>
  <مقطع رقم="٣١">يُقَاْلُ <قول رقم="١٣">هُوَ حِلَّةَ الْغَوْرِ</قول> أَيْ قَصْدَهُ</مقطع>
  <مقطع رقم="٣٢">سَمِعْنَا ذٰلِكَ مِمَّنْ يُوْثَقُ بِهِ مِنَ الْعَرَبِ</مقطع>
  <مقطع رقم="٣٣">وَيُقَاْلُ <قول رقم="١٤">هُمَا خَطَّاْنِ جَنَاْبَتَيْ أَنْفِهَا</قول>
  </مقطع>
  <مقطع رقم="٣٤">يَعْنِي الْخَطَّيْنِ اللَّذَيْنِ اكْتَنَفَا جَنْبَيْ أَنْفِ الظَّبْيَةِ</مقطع>
  <مقطع رقم="٣٥">وَقَاْلَ الشَّاْعِرُ وَهُوَ الْأَعْشَى</مقطع>
  <شاهدة مقطع="٣٦" رقم="٤">
    <بيت>
      <مصراع>نَحْنُ الْفَوَاْرِسُ يَوْمَ الْحِنْوِ ضَاْحِيَةً</مصراع>
      <مصراع>جَنْبَيْ فُطَيْمَةَ لَا مِيْلٌ وَلَا عُزُلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٧">فَهٰذَا كُلُّهُ انْتَصَبَ عَلَى مَا هُوَ فِيْهِ وَهُوَ غَيْرُهُ</مقطع>
  <مقطع رقم="٣٨">وَصَاْرَ بِمَنْزِلَةِ الْمُنَوَّنِ الَّذِي يَعْمَلُ فِيْمَا بَعْدَهُ</مقطع>
  <مقطع رقم="٣٩">نَحْوَ الْـ<حرف>عِشْرِيْنَ</حرف> وَنَحْوَ قَوْلِهِ <قول رقم="١٥">هُوَ خَيْرٌ مِنْكَ عَمَلًا</قول>
  </مقطع>
  <مقطع رقم="٤٠">فَصَاْرَ <قول رقم="١٦">هُوَ خَلْفَكَ</قول> وَ<قول رقم="١٧">زَيْدٌ خَلْفَكَ</قول> بِمَنْزِلَةِ ذٰلِكَ</مقطع>
  <مقطع رقم="٤١">وَالْعَاْمِلُ فِي <حرف>خَلْفٍ</حرف>
  </مقطع>
  <مقطع رقم="٤٢">الَّذِي هُوَ مَوْضِعٌ لَهُ</مقطع>
  <مقطع رقم="٤٣">وَالَّذِي هُوَ فِي مَوْضِعِ خَبَرِهِ</مقطع>
  <مقطع رقم="٤٤">كَمَا أَنَّكَ إِذَا قُلْتَ <قول رقم="١٨">عَبْدُ اللّٰهِ أَخُوْكَ</قول>
  </مقطع>
  <مقطع رقم="٤٥">فَالْآخِرُ قَدْ رَفَعَهُ الْأَوَّلُ وَعَمِلَ فِيْهِ</مقطع>
  <مقطع رقم="٤٦">وَبِهِ اسْتَغْنَى الْكَلَاْمُ</مقطع>
  <مقطع رقم="٤٧">وَهُوَ مُنْفَصِلٌ مِنْهُ</مقطع>
  <مقطع رقم="٤٨">وَمِنْ ذٰلِكَ قَوْلُ الْعَرَبِ <قول رقم="١٩">هُوَ مَوْضِعَهُ</قول>
  </مقطع>
  <مقطع رقم="٤٩">وَ<قول رقم="٢٠">هُوَ مَكَاْنَهُ</قول>
  </مقطع>
  <مقطع رقم="٥٠">وَ<قول رقم="٢١">َهٰذَا مَكَاْنَ هٰذَا</قول>
  </مقطع>
  <مقطع رقم="٥١">وَ<قول رقم="٢٢">هٰذَا رَجُلٌ مَكَاْنَكَ</قول> إِذَا أَرَدْتَ الْبَدَلَ</مقطع>
  <مقطع رقم="٥٢">كأَنَّكَ قُلْتَ <قول رقم="٢٣">هٰذَا فِي مَكَاْنِ ذَا</قول>
  </مقطع>
  <مقطع رقم="٥٣">وَ<قول رقم="٢٤">هٰذَا رَجُلٌ فِي مَكَاْنِكَ</قول>
  </مقطع>
  <مقطع رقم="٥٤">وَيُقَاْلُ لِلرَّجُلِ <قول رقم="٢٥">اِذْهَبْ مَعَكَ بِفُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٥٥">فَيَقُوْلُ <قول رقم="٢٦">مَعِي رَجُلٌ مَكَاْنَ فُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٥٦">أَيْ مَعِي رَجُلٌ يَكُوْنُ بَدَلًا مِنْهُ وَيُغنِي غَنَاْءَهُ وَيَكُوْنُ فِي مَكَاْنِهِ</مقطع>
  <مقطع رقم="٥٧">وَاعْلَمْ أَنَّ هٰذِهِ الْأَشْيَاْءَ كُلَّهَا انْتِصَاْبُهَا مِنْ وَجْهٍ وَاْحِدٍ</مقطع>
  <مقطع رقم="٥٨">وَمِثْلُ ذٰلِكَ <قول رقم="٢٧">هُوَ صَدَدَكَ</قول>
  </مقطع>
  <مقطع رقم="٥٩">وَ<قول رقم="٢٨">هُوَ سَقَبَكَ</قول>
  </مقطع>
  <مقطع رقم="٦٠">وَ<قول رقم="٢٩">هُوَ قُرْبَكَ</قول>
  </مقطع>
  <مقطع رقم="٦١">وَاعْلَمْ أَنَّ هٰذِهِ الْأَشْيَاْءَ كُلَّهَا قَدْ تَكُوْنُ أَسْمَاْءً غَيْرَ ظُرُوْفٍ بِمَنْزِلَةِ <حرف>زَيْدٍ</حرف> وَ<حرف>عَمْرٍو</حرف>
  </مقطع>
  <مقطع رقم="٦٢">سَمِعْنَا مِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول رقم="٣٠">دَاْرُكَ ذَاْتُ الْيَمِيْنِ</قول>
  </مقطع>
  <مقطع رقم="٦٣">وَقَاْلَ الشَّاعِرُ وَهُوَ لَبِيْدٌ</مقطع>
  <شاهدة مقطع="٦٤" رقم="٥">
    <بيت>
      <مصراع>فَغَدَتْ كِلَا الْفَرْجَيْنِ تَحْسِبُ أَنَّهُ</مصراع>
      <مصراع>مَوْلَى الْمَخَاْفَةِ خَلْفُهَا وَأَمَاْمُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٥">وَمِنْ ذٰلِكَ أَيْضًا <قول رقم="٣١">هٰذَا سَوَاْءَكَ</قول>
  </مقطع>
  <مقطع رقم="٦٦">وَ<قول رقم="٣٢">هٰذَا رَجُلٌ سَوَاْءَكَ</قول>
  </مقطع>
  <مقطع رقم="٦٧">فَهٰذَا بِمَنْزِلَةِ <حرف>مَكَاْنَكَ</حرف> إِذَا جَعَلْتَهُ فِي مَعْنَى <حرف>بَدَلَك</حرف>
  </مقطع>
  <مقطع رقم="٦٨">وَلَا يَكُوْنُ اسْمًا إِلَّا فِي الشِّعْرِ</مقطع>
  <مقطع رقم="٦٩">قَاْلَ بَعْضُ الْعَرَبِ لَمَّا اضْطُرَّ فِي الشِّعْرِ جَعَلَهُ بِمَنْزِلَةِ <حرف>غَيْرٍ</حرف>
  </مقطع>
  <مقطع رقم="٧٠">قَاْلَ الشَّاْعِرُ وَهُوَ رَجُلٌ مِنَ الْأَنْصَاْرِ</مقطع>
  <شاهدة مقطع="٧١" رقم="٦">
    <بيت>
      <مصراع>وَلَا يَنْطِقُ الْفَحْشَاْءَ مَنْ كَاْنَ مِنْهُمْ</مصراع>
      <مصراع>إِذَا قَعَدُوْا مِنَّا وَلَا مِنْ سَوَاْئِنَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٢">وَقَاْلَ الْآخَرُ وَهُوَ الْأَعْشَى</مقطع>
  <شاهدة مقطع="٧٣" رقم="٧">
    <بيت>
      <مصراع>تَجَاْنَفُ عَنْ جَوِّ الْيَمَاْمَةِ نَاْقَتِي</مصراع>
      <مصراع>وَمَا قَصَدَتْ مِنْ أَهْلِهَا لِسَوَاْئِكَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٤">وَمِثْلُ ذٰلِكَ <قول رقم="٣٣">أَنْتَ كَعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٧٥">كَأَنَّهُ يَقُوْلُ [إِذَا قَاْلَ أَنْتَ كَعَبْدِ اللّٰهِ]</مقطع>
  <مقطع رقم="٧٦">
    <قول رقم="٣٤">أَنْتَ فِي حَاْلٍ كَعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٧٧">فَأُجْرِيَ مُجْرَى <حرف>بِعَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="٧٨">إِلَّا أَنَّ نَاْسًا مِنَ الْعَرَبِ إِذَا اضْطُرُّوْا فِي الشِّعْرِ جَعَلُوْهَا بِمَنْزِلَةِ <حرف>مِثْلٍ</حرف>
  </مقطع>
  <مقطع رقم="٧٩">قَاْلَ الرَّاْجِزُ وَهُوَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة مقطع="٨٠" رقم="٨">
    <بيت>
      <مصراع>فَصُيَّرُوْا مِثْلَ كَعَصْفٍ مَأْكُوْلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨١">وَقَاْلَ خِطَاْمٌ الْمُجَاْشِعِي</مقطع>
  <شاهدة مقطع="٨٢" رقم="٩">
    <بيت>
      <مصراع>وَصَاْلِيَاْتٍ كَكَمَا يُؤَثْفَيْنْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٣">وَيَدُلُّكَ عَلَى أَنَّ <حرف>سَوَاْءَكَ</حرف> وَ<حرف>كَزَيْدٍ</حرف> بِمَنْزِلَةِ الظُّرُوْفِ</مقطع>
  <مقطع رقم="٨٤">أَنَّكَ تَقُوْلُ <قول رقم="٣٥">مَرَرْتُ بِمَنْ سَوَاْءَكَ</قول>
  </مقطع>
  <مقطع رقم="٨٥">وَ<حرف>عَلَى مَنْ سَوَاْءَكَ</حرف> وَ<حرف>الَّذِي كَزَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٨٦">فَحَسُنَ هٰذَا كَحُسْنِ <حرف>مَنْ فِيْهَا</حرف> وَ<حرف>الَّذِي فِيْهَا</حرف>
  </مقطع>
  <مقطع رقم="٨٧">وَلَا تَحْسُنُ الْأَسْمَاْءُ هٰهُنَا وَلَا تَكْثُرُ فِي الْكَلَاْمِ</مقطع>
  <مقطع رقم="٨٨">لَوْ قُلْتَ <قول رقم="٣٦">مَرَرْتُ بِمَنْ فَاْضِلٌ</قول> أَوْ <حرف>الَّذِي صَاْلِحٌ</حرف> كَاْنَ قَبِيْحًا</مقطع>
  <مقطع رقم="٨٩">فَهٰكَذَا مَجْرَى <حرف>كَزَيْدٍ</حرف> وَ<حرف>سَوَاْءَكَ</حرف>
  </مقطع>
  <مقطع رقم="٩٠">وَتَقُوْلُ <قول رقم="٣٧">كَيْفَ أَنْتَ إِذَا أُقْبِلَ قُبْلُكَ وَنُحِيَ نَحْوُكَ</قول>
  </مقطع>
  <مقطع رقم="٩١">كَأَنَّهُ قَاْلَ <قول رقم="٣٨">كَيْفَ أَنْتَ إِذَا أُرِيْدَتْ نَاْحِيَتُكَ</قول>
  </مقطع>
  <مقطع رقم="٩٢">وَ<حرف>إِذَا أُرِيْدَ مَا عِنْدَكَ</حرف>
  </مقطع>
  <مقطع رقم="٩٣">حِيْنَ قَاْلَ <حرف>إِذَا نُحِيَ نَحْوُكَ</حرف>
  </مقطع>
  <مقطع رقم="٩٤">وَأَمَّا حِيْنَ قَاْلَ <قول رقم="٣٩">أُقْبِلَ قُبْلُكَ</قول>
  </مقطع>
  <مقطع رقم="٩٥">فَكَأَنَّهُ قَاْلَ <قول رقم="٤٠">كَيْفَ أَنْتَ إِذَا أُقْبِلَ النَّقْبَ الرِّكَاْبُ</قول>
  </مقطع>
  <مقطع رقم="٩٦">جَعَلَهُمَا اسْمَيْنِ</مقطع>
  <مقطع رقم="٩٧">وَزَعَم الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّ النَّصْبَ جَيِّدٌ إِذَا جَعَلَهُ ظَرْفًا</مقطع>
  <مقطع رقم="٩٨">وَهُو بِمَنْزِلَةِ قَوْلِ الْعَرَبِ <قول رقم="٤١">هُوَ قَرِيْبٌ مِنْكَ</قول> وَ<قول رقم="٤٢">هُوَ قَرِيْبًا مِنْكَ</قول> أَيْ <قول رقم="٤٣">مَكَاْنًا قَرِيْبًا مِنْكَ</قول>
  </مقطع>
  <مقطع رقم="٩٩">حَدَّثَنَا يُوْنُسُ أَنَّ الْعَرَبَ تَقُوْلُ فِي كَلَاْمِهَا</مقطع>
  <مقطع رقم="١٠٠">
    <قول رقم="٤٤">هَلْ قَرِيْبًا مِنْكَ أَحَدٌ</قول>
  </مقطع>
  <مقطع رقم="١٠١">كَقَوْلِهِمْ <قول رقم="٤٥">هَلْ قُرْبَكَ أَحَدٌ</قول>
  </مقطع>
  <رأس هو="٠">
    <عنوان>دون والظُّروف على سعة الكلام</عنوان>
  </رأس>
  <مقطع رقم="١٠٢">وَأَمَّا <حرف>دُوْنَكَ</حرف> فَإِنَّهُ لَا يُرْفَعُ أَبَدًا</مقطع>
  <مقطع رقم="١٠٣">وَإِنْ قُلْتَ <قول رقم="٤٦">هُوَ دُوْنَكَ فِي الشَّرَفِ</قول>
  </مقطع>
  <مقطع رقم="١٠٤">لِأَنَّ هٰذَا إِنَّمَا هُوَ مَثَلٌ</مقطع>
  <مقطع رقم="١٠٥">كَمَا كَاْنَ <قول رقم="٤٧">هٰذَا مَكَاْنَ ذَا</قول> فِي الْبَدَلِ مَثَلًا</مقطع>
  <مقطع رقم="١٠٦">وَلٰكِنَّهُ عَلَى السَّعَةِ</مقطع>
  <مقطع رقم="١٠٧">وَإِنَّمَا الْأَصْلُ فِي الظُّرُوْفِ الْمَوْضِعُ وَالْمُسْتَقَرُّ مِنَ الْأَرْضِ</مقطع>
  <مقطع رقم="١٠٨">وَلٰكِنَّهُ جَاْزَ هٰذَا كَمَا تَقُوْلُ <قول رقم="٤٨">إِنَّهُ لَصُلْبُ الْقَنَاْةِ</قول>
  </مقطع>
  <مقطع رقم="١٠٩">وَ<قول رقم="٤٩">إِنَّهُ لَمِنْ شَجَرَةٍ صَاْلِحَةٍ</قول>
  </مقطع>
  <مقطع رقم="١١٠">وَلٰكِنَّهُ عَلَى السَّعَةِ</مقطع>
  <مقطع رقم="١١١">وَأَمَّا <قول رقم="٥٠">قُصِدَ قَصْدُكَ</قول>
  </مقطع>
  <مقطع رقم="١١٢">فَمِثْلُ <قول رقم="٥١">نُحِى نَحْوُكَ</قول> وَ<قول رقم="٥٢">أُقْبِلَ قُبْلُكَ</قول>
  </مقطع>
  <مقطع رقم="١١٣">يَرْتَفِعُ كَمَا يَرْتَفِعَاْنِ وَيَنْتَصِبُ كَمَا يَنْتَصِبَاْنِ</مقطع>
  <مقطع رقم="١١٤">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٥٣">هُوَ دُوْنُكَ</قول>
  </مقطع>
  <مقطع رقم="١١٥">إِذَا جَعَلْتَ الْأَوَّلَ الْآخِرَ وَلَمْ تَجْعَلْهُ رَجُلًا</مقطع>
  <مقطع رقم="١١٦">وَقَدْ يَقُوْلُوْنَ <قول رقم="٥٤">هُوَ دُوْنٌ</قول> فِي غَيْرِ الْإِضَاْفَةِ</مقطع>
  <مقطع رقم="١١٧">أَيْ <قول رقم="٥٥">هُوَ دُوْنٌ مِنَ الْقَوْمِ</قول>
  </مقطع>
  <مقطع رقم="١١٨">وَ<قول رقم="٥٦">هٰذَا ثَوْبٌ دُوْنٌ</قول> إِذَا كَاْنَ رَدِيْئًا</مقطع>
  <رأس هو="٠">
    <عنوان>جَوْف وداخل وخارج وخَلْفَ وما أشبهها</عنوان>
  </رأس>
  <مقطع رقم="١١٩">وَاعْلَمْ أَنَّهُ لَيْسَ كُلُّ مَوْضِعٍ وَلَا كُلُّ مَكَاْنٍ يَحْسُنُ أَنْ يَكُوْنَ ظَرْفًا</مقطع>
  <مقطع رقم="١٢٠">فَمِمَّا لَا يَحْسُنُ أَنْ يَكُوْنَ ظَرْفًا أَنَّ الْعَرَبَ لَا تَقُوْلُ <قول رقم="٥٧">هُوَ جَوْفَ الْمَسْجِدِ</قول>
  </مقطع>
  <مقطع رقم="١٢١">وَلَا <قول رقم="٥٨">هُوَ دَاْخِلَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٢٢">وَلَا <قول رقم="٥٩">هُوَ خَاْرِجَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٢٣">حَتَّى تَقُوْلُ <قول رقم="٦٠">هُوَ فِي جَوْفِهَا</قول>
  </مقطع>
  <مقطع رقم="١٢٤">وَ<حرف>فِي دَاْخِلِ الدَّاْرِ</حرف> وَ<حرف>مِنْ خَاْرِجِهَا</حرف>
  </مقطع>
  <مقطع رقم="١٢٥">وَإِنَّمَا فَُرِّقَ بَيْنَ <حرف>خَلْفَ</حرف> وَمَا أَشْبَهَهَا وَبَيْنَ هٰذِهِ الْحُرُوْفِ</مقطع>
  <مقطع رقم="١٢٦">لِأَنَّ <حرف>خَلْفَ</حرف> وَمَا أَشْبَهَهَا لِلْأَمَاْكِنِ الَّتِي تَلِي الْأَسْمَاْءَ مِنْ أَقْطَاْرِهَا</مقطع>
  <مقطع رقم="١٢٧">عَلَى هٰذَا جَرَتْ عِنْدَهُمْ</مقطع>
  <مقطع رقم="١٢٨">وَالْجَوْفُ وَالْخَاْرِجُ عِنْدَهُمْ بِمَنْزِلَةِ الظَّهْرِ وَالْبَطْنِ وَالرَّأْسِ وَالْيَدِ</مقطع>
  <مقطع رقم="١٢٩">وَصَاْرَتْ <حرف>خَلْفَ</حرف> وَمَا أَشْبَهَهَا تَدْخُلُ عَلَى كُلِّ اسْمٍ</مقطع>
  <مقطع رقم="١٣٠">فَتَصِيْرُ أَمْكِنَةً تَلِي الِاسْمَ مِنْ نَوَاْحِيْهِ وَأَقْطَاْرِهِ وَمِنْ أَعْلَاْهُ وَأَسْفَلِهِ</مقطع>
  <مقطع رقم="١٣١">وَتَكُوْنُ ظُرُوْفًا كَمَا وَصَفْتُ لَكَ</مقطع>
  <مقطع رقم="١٣٢">وَتَكُوْنُ أَسْمَاْءً كَقَوْلِكَ <قول رقم="٦١">هُوَ نَاْحِيَةُ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٣٣">إِذَا أَرَدْتَ النَّاْحِيَةَ بِعَيْنِهَا</مقطع>
  <مقطع رقم="١٣٤">وَ<قول رقم="٦٢">هُوَ فِي نَاْحِيَةِ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٣٥">فَتَصِيْرُ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٦٣">هُوَ فِي بَيْتِكَ</قول> وَ<حرف>فِي دَاْرِكَ</حرف>
  </مقطع>
  <مقطع رقم="١٣٦">وَيَدُلُّكَ عَلَى أَنَّ الْمَجْرُوْرَ بِمَنْزِلَةِ الِاسْمِ غَيْرِ الظَّرْفِ</مقطع>
  <مقطع رقم="١٣٧">أَنَّكَ تَقُوْلُ <قول رقم="٦٤">زَيْدٌ وَسَطَ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="١٣٨">وَ<قول رقم="٦٥">ضَرَبْتُ وَسَطَهُ</قول>
  </مقطع>
  <مقطع رقم="١٣٩">وَتَقُوْلُ <حرف>فِي وَسَطِ الدَّاْرِ</حرف>
  </مقطع>
  <مقطع رقم="١٤٠">فِيَصِيْرُ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٦٦">ضَرَبْتُ وَسَطَهُ</قول> مَفْتُوْحًا مِثْلَهُ</مقطع>
  <رأس هو="٠">
    <عنوان>تَمَكُّنُ الظُّرُوْف وَغَرَاْئِبُهَا</عنوان>
  </رأس>
  <مقطع رقم="١٤١">وَاعْلَمْ أَنَّ الظُّرُوْفَ بَعْضُهَا أَشَدُّ تَمَكُّنًا مِنْ بَعْضٍ فِي الْأَسْمَاْءِ</مقطع>
  <مقطع رقم="١٤٢">نَحْوَ الْـ<حرف>قُبْلِ</حرف> وَالْـ<حرف>قَصْدِ</حرف> وَالـ<حرف>نَّاْحِيَةِ</حرف>
  </مقطع>
  <مقطع رقم="١٤٣">وَأَمَّا الْـ<حرف>خَلْفُ</حرف> وَالْـ<حرف>أَمَاْمُ</حرف> وَالـ<حرف>تَّحْتُ</حرف>
  </مقطع>
  <مقطع رقم="١٤٤">فَهُنَّ أَقَلُّ اسْتِعْمَاْلًا فِي الْكَلَاْمِ أَنْ تُجْعَلُ أَسْمَاْءً</مقطع>
  <مقطع رقم="١٤٥">وَقَدْ جَاْءَتْ عَلَى ذٰلِكَ فِي الْكَلَاْمِ وَالْأَشْعَاْرِ</مقطع>
  <مقطع رقم="١٤٦">وَهٰذِهِ حُرْوُفُ تَجْرِي مَجْرَى <حرف>خَلْفَكَ</حرف> وَ<حرف>أَمَاْمَكَ</حرف>
  </مقطع>
  <مقطع رقم="١٤٧">وَلٰكِنَّا عَزَلْنَاْهَا لِنُفَسِّرَ مَعَاْنِيْهَا لِأَنَّهَا غَرَاْئِبُ</مقطع>
  <مقطع رقم="١٤٨">فَمِنْ ذٰلِكَ حَرْفَاْنِ ذَكَرْنَاْهُمَا فِي الْبَاْبِ الْأَوَّلِ ثُمَّ لَمْ نُفَسِّرْ مَعْنَاْهُمَا</مقطع>
  <مقطع رقم="١٤٩">وَهُمَا <حرف>صَدَدَكَ</حرف> وَمَعْنَاْهُ الْقَصْدُ وَ<حرف>سَقَبَكَ</حرف> وَمَعْنَاْهُ الْقُرْبُ</مقطع>
  <مقطع رقم="١٥٠">وَمِنْهُ قَوْلُ الْعَرَبِ <قول رقم="٦٧">هُوَ وَزْنَ الْجَبَلِ</قول> أَيْ نَاْحِيَةً مِنْهُ</مقطع>
  <مقطع رقم="١٥١">وَ<قول رقم="٦٨">هُوَ زِنَةَ الْجَبَلِ</قول> أَيْ حِذَاْءَهُ</مقطع>
  <مقطع رقم="١٥٢">وَمِن ذٰلِكَ قَوْلُ الْعَرَبِ <قول رقم="٦٩">هُمْ قُرَاْبَتَكَ</قول> أَيْ قُرْبَكَ يَعْنِي الْمَكَاْنَ</مقطع>
  <مقطع رقم="١٥٣">وَ<قول رقم="٧٠">هُمْ قُرَاْبَتَكَ فِي الْعِلْمِ</قول> أَيْ <قول رقم="٧١">قَرِيْبًا مِنْكَ فِي الْعِلْمِ</قول>
  </مقطع>
  <مقطع رقم="١٥٤">وَكَاْنَ هٰذَا بِمَنْزِلَةِ قَوْلِ الْعَرَبِ</مقطع>
  <مقطع رقم="١٥٥">
    <قول رقم="٧٢">هُوَ حِذَاْءَهُ وَإِزَاْءَهُ</قول>
  </مقطع>
  <مقطع رقم="١٥٦">وَ<قول رقم="٧٣">حَوَاْلَيْهِ بَنُو فَُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="١٥٧">وَ<قول رقم="٧٤">قَوْمُكَ أَقْطَاْرَ الْبِلَاْدِ</قول>
  </مقطع>
  <مقطع رقم="١٥٨">وَمِنْ ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ أَبُو حَيَّةَ النُّمَيْرِيّ</مقطع>
  <شاهدة مقطع="١٥٩" رقم="١٠">
    <بيت>
      <مصراع>إِذَا مَا نَعَشْنَاْهُ عَلَى الرَّحْلِ يَنْثَنِي</مصراع>
      <مصراع>مُسَاْلَيْهِ عَنْهُ مِنْ وَرَاْءٍ وَمُقْدَمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٦٠">وَ<حرف>مُسَاْلَاْهُ</حرف> عِطْفَاْهُ فَصَاْرَ بِمَنْزِلَةِ <حرف>جَنْبَيْ فُطَيْمَةَ</حرف>
  </مقطع>
