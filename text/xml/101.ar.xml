  <عنوان>
    <مقطع هوية='٤٩٥٠٠'>هٰذَا بَاْبُ مَجْرَى النَّعْتِ عَلَى الْمَنْعُوْتِ</مقطع>
    <مقطع هوية='٩٠٠٥٠'>وَالشَّرِيْكِ عَلَى الشَّرِيْكِ</مقطع>
    <مقطع هوية='٨٨٣٢٩'>وَالْبَدَلِ عَلَى الْمُبْدَلِ مِنْهُ</مقطع>
    <مقطع هوية='١١٧٣٦'>وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
  </عنوان>
  <مقطع هوية='٨٧٥٨٨'>فَأَمَّا النَّعْتُ الَّذِي جَرَى عَلَى الْمَنْعُوْتِ</مقطع>
  <مقطع هوية='٢٢٠٨٩'>فَقَوْلُكَ <قول هوية='٣٨٦١٠'>مَرَرْتُ بِرَجُلٍ ظَرِيْفٍ قَبْلُ</قول></مقطع>
  <مقطع هوية='٢٦٩٤٨'>فَصَاْرَ النَّعْتُ مَجْرُوْرًا مِثْلَ الْمَنْعُوْتِ</مقطع>
  <مقطع هوية='٦٤٦٠٩'>لِأَنَّهُمَا كَالِاسْمِ الْوَاْحِدِ</مقطع>
  <!-- <مقطع هوية='٠٤٩١٩'>وإِنَّمَا  <هاْروْن مجلد="1" صفحة="421"/> صَاْرَ كَالِاسْمِ الْوَاْحِدِ -->
  <مقطع هوية='١٧٠٩٩'>مِنْ قِبَلِ أَنَّكَ لَمْ تُرِدْ الوَاْحِدَ مِن الرِّجَاْلِ</مقطع>
  <مقطع هوية='٦٧٥٢١'>الَّذِيْنَ كُلُّ وَاْحِدٍ مِنْهُمْ رَجُلٌ</مقطع>
  <مقطع هوية='٢٢٧٨٢'>ولٰكِنَّكَ أَرَدْتَ الْوَاْحِدَ مِنَ الرِّجَاْلِ</مقطع>
  <مقطع هوية='٤٣٦٧٧'>الَّذِيْنَ كُلُّ وَاْحِدٍ مِنْهُمْ رَجُلٌ ظَرِيْفٌ</مقطع>
  <مقطع هوية='٨١٨٨٤'>فَهُوَ نَكِرَةٌ</مقطع>
  <مقطع هوية='٠٤٨٨٨'>وَإِنَّمَا كَاْنَ نَكِرَةً</مقطع>
  <مقطع هوية='١١١٦٥'>لِأَنَّهُ مِنْ أُمَّةٍ كُلُّهَا لَهُ مِثْلُ اسْمِهِ</مقطع>
  <مقطع هوية='٤٤٦٩٣'>وذٰلِكَ أَنَّ الرِّجَاْلَ كُلُّ وَاْحِدٍ مِنْهُمْ رَجُلٌ</مقطع>
  <مقطع هوية='١٠٣٣٧'>والرِّجَاْلُ الظُّرَفَاْءُ كُلُّ وَاْحِدٍ مِنْهُمْ رَجُلٌ ظَريْفٌ</مقطع>
  <مقطع هوية='٣٥١٢٣'>فَاسْمُهُ يَخْلِطُهُ بأُمَّتِهِ حَتَّى لا يُعْرَفَ منها</مقطع>
  <مقطع هوية='٧٤٩٦٩'>فإِنْ أَطَلْتَ النَّعْتَ فَقُلْتَ <قول هوية='٤١٢١٤'>مَرَرْتُ بِرَجُلٍ عَاْقِلٍ كَرِيْمٍ مُسْلِمٍ</قول></مقطع>
  <مقطع هوية='٥٨٦٦٢'>فَأَجْرِهِ عَلَى أَوَّلِهِ</مقطع>
  <مقطع هوية='٦٤٩٩٧'>وَمِنَ النَّعْتِ أَيْضًا <قول هوية='٧١٠٨٤'>مَرَرْتُ بِرَجُلٍ أَيِّمَا رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٨٨٣٤٥'>فـ<حرف>أَيُّمَا</حرف> نَعْتٌ لِلـ<حرف>رَّجُلِ</حرف> فِي كَمَاْلِهِ وَبَذِّهِ غَيْرَهُ</مقطع>
  <مقطع هوية='٣١٠٧٠'>وَالْعَرَبُ تَقُوْلُ <قول هوية='٠٦٢٥١'>بَذَّ فُلاْنٌ فُلاْنًا يَبُذُّه بَذًا</قول> إِذَا مَا عَلَاهُ وَفَاْقَهُ فِي حُسْنٍ أَوْ عَمَلٍ كَاْئِنًا مَا كَاْنَ</مقطع>
  <!-- en="to excel someone in beauty or work"/>
  -->
  <مقطع هوية='٣٣٨٢١'>كَأَنَّهُ قَاْلَ <قول هوية='٢٠٨٥٢'>مَرَرْتُ بِرَجُلٍ كَاْمِلٍ</قول>
  </مقطع>
  <مقطع هوية='٢١٣٦٣'>وَمِنْهُ <قول هوية='٠١٨١٨'>مَرَرْتُ بِرَجُلٍ حَسْبِكَ مِنْ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٣٩١١٢'>فَهٰذَا نَعْتٌ لِرَجُلٍ بِإِحْسَاْبِهِ إِيَّاْكَ مِنْ كُلِّ رَجُلٍ</مقطع>
  <مقطع هوية='٧٩٧٣١'>وَكَذٰلِكَ <قول هوية='٩٩٨٠٠'>كَاْفِيْكَ مِنْ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٦٣١٧٧'>وَ<قول هوية='٠٣١٦٢'>هَمِّكَ مِنْ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٦٥٣٧٦'>وَ<قول هوية='٦٦٢٨٠'>نَاْهِيْكَ مِن رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٥٣٣٣٩'>وَ<قول هوية='٦٩٣٢٦'>مَرَرْتُ بِرَجُلٍ مَا شِئْتَ مِنْ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٢٠٥٠٥'>وَ<قول هوية='٧١٤٠٥'>مَرَرْتُ بِرَجُلٍ شَرْعِكَ مِن رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='١٣٩٦٦'>و <قول هوية='٧٥٢٧٧'>مَرَرْتُ بِرَجُلٍ هَدِّكَ مِنْ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٠٨٢٠٠'>و <قول هوية='٠٦٥٩٢'>بِاْمْرَأَةٍ هَدِّكَ مِنِ امْرَأَةٍ</قول>
  </مقطع>
  <مقطع هوية='٠٠٤٩٧'>فَهٰذَا كُلُّه عَلَى مَعْنًى وَاْحِدٍ وَمَا كَاْنَ مِنْهُ يَجْرِي فِيْهِ الْإِعْرَاْبُ</مقطع>
  <مقطع هوية='٠٦٨٦٤'>فَصَاْرَ نَعْتًا لَأَوَّلِهِ جَرَى عَلَى أَوَّلِهِ</مقطع>

  <!--
      <para>All of this has the same meaning, and Clarification applies to what is like it, so it becomes an attribution to its antecedent, running on its antecedent.
      </para>
  -->

  <مقطع هوية='٥٧٩٦٠'>وَسَمِعْنَا بَعْضَ الْعَرَبِ الْمَوْثُوْقِ بِهِمْ يَقُوْلُ <قول هوية='٣٢٧٧١'>مَرَرْتُ بِرَجُلٍ هَدَّكَ مِنْ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٣٦٢٠٣'>وَ<قول هوية='٩٥١٠٣'>مَرَرْتُ بِاْمْرَأَةٍ هَدَّتْكَ مِنِ امْرَأَةٍ</قول>
  </مقطع>
  <مقطع هوية='٧٢٦٦٨'>فَجَعَلَهُ فِعْلًا مَفْتُوْحًا كَأَنَّهُ قَاْلَ <حرف>فَعَلَ</حرف> و<حرف>فَعَلَتْ</حرف> بِمَنْزِلَةِ <حرف>كَفَاْكَ</حرف> و<حرف>كَفَتْكَ</حرف>
  </مقطع>
  <مقطع هوية='٧٤٠٠٩'>وَمِنَ النَّعْتِ أَيْضًا <قول هوية='٢٩٨٤٦'>مَرَرْتُ بِرَجُلٍ مِثْلِكَ</قول>
  </مقطع>
  <مقطع هوية='٦٦٤٥٩'>فـ<حرف>مِثْلُكَ</حرف> نَعْتٌ عَلَى أَنَّكَ قُلْتَ <قول هوية='٠٩٣٣٦'>هُوَ رَجُلٌ كَمَا أَنَّكَ رَجُلٌ</قول>
  </مقطع>
  <مقطع هوية='٧٣١٧٢'>وَيَكُوْنُ نَعْتًا أَيْضًا عَلَى أَنَّهُ لَمْ يَزِدْ عَلَيْكَ وَلَمْ يَنْقُصْ عَنْكَ فِي شَيْءٍ مَنَ الْأُمُوْرِ</مقطع>
  <مقطع هوية='٨٤٤٣٨'>ومِثْلُه <قول هوية='٥٨٦٧٦'>مَرَرْتُ بِرَجُلٍ مِثْلِكَ</قول> أَيْ صُوْرَتُهُ شَبِيْهَةٌ بِصُوْرَتِكَ</مقطع>
  <مقطع هوية='٥٨٩٧١'>وَكَذٰلِكَ <قول هوية='٨٩٧٠٤'>مَرَرْتُ بِرَجُلٍ ضَرْبِكَ</قول> و<حرف>شِبْهِكَ</حرف> وَكَذٰلِكَ <حرف>نَحْوِكَ</حرف>
  </مقطع>
  <مقطع هوية='٨٣٨٩٤'>يُجْرَيْنَ فِي الْمَعْنَى وَالْإِعْرَاْبِ مُجْرًى وَاْحِدًا</مقطع>
  <مقطع هوية='٧٦٤٧٦'>وَهُنَّ مُضَاْفَاْتٌ إِلَى مَعْرِفَةٍ صِفَاْتٌ لِنَكِرَةٍ</مقطع>
  <مقطع هوية='٦٥٩٣٤'>وَيُوْنُسُ يَقُوْلُ <قول هوية='٥٢٣١٣'>هٰذَا مِثلُكَ مُقْبِلًا</قول>
  </مقطع>
  <مقطع هوية='٨٣٦٢٦'>وَ<قول هوية='٧٤٣٢٣'>هٰذَا زَيْدٌ مِثْلَكَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٩٠٣'>إِذَا قَدَّمَهُ جَعَلَهُ مَعْرِفَةً وَإِذَا أَخَّرَهُ جَعَلَهُ نَكِرَةً</مقطع>
  <مقطع هوية='٨٧٦١٥'>وَمِنَ الْعَرَبِ مَنْ يُوَاْفِقُهُ عَلَى ذٰلِكَ</مقطع>
  <مقطع هوية='٦٧٦٣٩'>وَمِنْهُ <قول هوية='١٩٣٤٩'>مَرَرْتُ بِرَجُلٍ شَرٍّ مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٣٧٥٢٧'>فَهُوَ نَعْتٌ عَلَى أَنَّهُ نَقَصَ عَنْ أَنْ يَكُوْنَ مِثْلَهُ</مقطع>
  <مقطع هوية='٩١٣٧٤'>وَمِنْهُ <قول هوية='١٣٥١٣'>مَرَرْتُ بِرَجُلٍ خَيْرٍ مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٣٨٣٤١'>فَهُوَ نَعْتٌ لَهُ بِأَنَّهُ قَدْ زَاْدَ عَلَى أَنْ يَكُوْنَ مِثْلَهُ</مقطع>
  <مقطع هوية='٦٤١٣٥'>وَمِنْهُ <قول هوية='٧٧٠٢٣'>مَرَرْتُ بِرَجُلٍ غَيْرِكَ</قول>
  </مقطع>
  <مقطع هوية='٤٥٣٢٠'>فَـ<حرف>غَيْرُكَ</حرف> نَعْتٌ يُفْصَلُ بِهِ بَيْنَ مَنْ نَعَتَّهُ بِغَيْرٍ وَبَيْنَ مَنْ أَضَفْتَهَا إِلَيْهِ</مقطع>
  <مقطع هوية='٧٧٧٤٦'>حَتَّى لَا يَكُوْنُ مِثْلَهُ أَوْ يَكُوْنُ مَرَّ بِاْثْنَيْنِ</مقطع>
  <مقطع هوية='١٦٦٦٤'>وَمِنْهُ <قول هوية='٢٣٧٨٠'>مَرَرْتُ بِرَجُلٍ آخَرَ</قول>
  </مقطع>
  <مقطع هوية='٢٤٧٧٦'>فـ<حرف>آخَرُ</حرف> نَعْتٌ عَلَى نَحْوِ <حرف>غَيْرِ</حرف>
  </مقطع>
  <مقطع هوية='٥٦٢٧١'>وَمِنْهُ <قول هوية='١٣٤٧٧'>مَرَرْتُ بِرَجُلٍ حَسَنِ الْوَجْهِ</قول>
  </مقطع>
  <مقطع هوية='٧٢١١٥'>نَعَتَّ الرَجُلَ بحُسْنِ وَجْهِهِ وَلَم تَجْعَلْ فِيْهِ الْهَاْءَ الَّتِي هِيَ إِضْمَاْرُ الـ<حرف>رَّجُلِ</حرف>
  </مقطع>
  <مقطع هوية='٠٤٤١٥'>كَمَا تَقُوْلُ <حرف>حَسَنٌ وَجْهُهُ</حرف> لِأَنَّهُ إِذَا قِيْلَ <قول هوية='٣٣٦٣٤'>حَسَنُ الْوَجْهِ</قول> عُلِمَ أَنَّهُ لَا يَعْنِي مِنَ الْوُجُوْهِ إِلَّا وَجْهَهُ</مقطع>
  <مقطع هوية='٧٧٥٧٢'>وَمِثْلْ ذٰلِكَ <قول هوية='٦٨٤٥٥'>مَرَرْتُ بِاْمْرَأَةٍ حَسَنَةِ الْوَجْهِ</قول>
  </مقطع>
  <مقطع هوية='٨٨١٤٤'>إِنَّمَا أَدْخَلْتَ الْهَاْءَ فِي الْـ<حرف>حَسَنَةِ</حرف> لِأَنَّ الْـ<حرف>حَسَنَةَ</حرف> إِنَّمَا وَقَعَتْ نَعْتًا لَهَا</مقطع>
  <مقطع هوية='٦٢٦٩١'>ثُمَّ بَلَغْتَ بِهِ بَعْدَ مَا صَاْرَ نَعْتًا لَهَا حَيْثُ أَرَدْتَ</مقطع>
  <مقطع هوية='٥٧٩١٨'>فَمِنْ ثَمَّ صَاْرَتْ فِيْهَا الْهَاْءُ</مقطع>
  <مقطع هوية='١٠١٦٦'>وَلَيْسَتْ بِمَنْزِلَةِ <حرف>حَسَنٌ وَجْهُهُ</حرف> فِي اللَّفْظِ وَإِنْ كَاْنَ الْمَعْنَى وَاْحِدًا</مقطع>
  <مقطع هوية='٨٩٥١٢'>لِأَنَّ الْـ<حرف>حَسَنَ</حرف> هٰهُنَا لِلْأَوَّلِ ثُمَّ تُضِيْفُهُ إِلَى مَنْ تُرِيْدُ</مقطع>
  <مقطع هوية='٦٠٨٢٩'>وَ <حرف>حَسَنُ الْوَجْهِ</حرف> مُضَاْفٌ إِلَى مَعْرِفَةٍ صِفَةٌ لِلنَّكِرَةِ</مقطع>
  <مقطع هوية='٤١٥٢٦'>فَلَمَّا كَاْنَتْ صِفَةً لِلنَّكِرَةِ أُجْرِيَتْ مُجْرَاْهَا</مقطع>
  <مقطع هوية='٤٣٠٦٦'>كَمَا جَرَتْ مُجْرَاْهَا أَخَوَاْتُهَا <حرف>مِثْلٌ</حرف> وَمَا أَشْبَهَهَا</مقطع>
  <!--
      <فهرست>ما يكوْن نَعْتًا للنَّكِرَةِ وَهُوَ مُضَاْفٌ إِلى مَعْرِفَةٍ</فهرست>
      <فهرست>نَعْت للنَّكِرَةِ</فهرست>
      <فهرست>نَعْت مُضَاْفٌ إِلى مَعْرِفَةٍ</فهرست>
  -->
  <مقطع هوية='٤٩٨٢٢'>وَمِمَّا يَكُوْنُ نَعْتًا لِلنَّكِرَةِ وَهُوَ مُضَاْفٌ إِلَى مَعْرِفَةٍ قَوْلُ الشَّاْعِرِ وَهُوَ امْرُؤُ الْقَيْسِ</مقطع>
  <شاهدة هوية='٨٨٩٨٢'>
    <بيت>
      <مصراع>بِمُنْجَرِدٍ قَيْدِ الْأَوَاْبِدِ لَاْحَهُ</مصراع>
      <مصراع>طِرَاْدُ الْهَوَاْدِي كُلَّ شَأْوٍ مُغَرَّبِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٨٢١٦'>وَمِنْهُ أَيْضًا <قول هوية='٩٣٥٧٢'>مَرَرْتُ عَلَى نَاْقَةٍ عُبْرِ الْهَوَاْجِرِ</قول>
  </مقطع>
   
  <مقطع هوية='٤١٩٣٧'>وَمَمَّا يَكُوْنُ مُضَاْفًا إِلَى الْمَعْرِفَةِ وَيَكُوْنُ نَعْتًا لِلنَّكِرَةِ الْأَسْمَاْءُ الَّتِي أُخِذَتْ مِنَ الْفِعْلِ</مقطع>
  <مقطع هوية='١١٧٣٨'>فَأُرِيْدَ بِهَا مَعْنَى التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٦٦٢٣٤'>مِن ذٰلِكَ <قول هوية='٣١٦٨٤'>مَرَرْتُ بِرَجُلٍ ضَاْرِبِكَ</قول>
  </مقطع>
  <مقطع هوية='٨٣٣٩٥'>فَهُوَ نَعْتٌ عَلَى أَنَّهُ سيَضْرِبُهُ</مقطع>
  <مقطع هوية='٥٧٣٠٤'>كَأَنَّكَ قُلْتَ <قول هوية='٩٤٥٤٤'>مَرَرْتُ بِرَجُلٍ ضَاْرِبٍ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٥١٠٧٢'>وَلٰكِنْ حُذِفَ التَّنْوِيْنُ اسْتِخْفَاْفًا</مقطع>
  <مقطع هوية='٦٧٩٠٤'>وَإِنْ أَظْهَرْتَ الِاسْمَ وَأَرَدْتَ التَّخْفِيْفَ وَالْمَعْنَى مَعْنَى التَّنْوِيْنِ جَرَى مُجْرَاْهُ حَيْنَ كَاْنَ الِاسْمُ مُضْمَرًا</مقطع>
  <مقطع هوية='٣٩٤٠١'>وَذٰلِكَ قَوْلُكَ <قول هوية='٤٠٣١٢'>مَرَرْتُ بِرَجُلٍ ضَاْرِبِهِ رَجُلٌ</قول>
  </مقطع>
  <مقطع هوية='٢١٠٤٧'>فَإِنْ شِئْتَ حَمَلْتَهُ عَلَى أَنَّهُ سَيَفْعَلُ</مقطع>
  <مقطع هوية='٠٠٦٤٠'>وَإِنْ شِئْتَ عَلَى أَنَّكَ مَرَرْتَ بِهِ وَهُوَ فِي حَاْلِ عَمَلٍ</مقطع>
  <مقطع هوية='٢٩٨٣٨'>وَذٰلِكَ قَوْلُه عَزَّ وَجَلَّ <آية هوية='٧٠١٤٥'>هٰذَا عَاْرِضٌ مُمْطِرُنَاْ</آية>
  </مقطع>
  <مقطع هوية='٢٣٢٣٢'>فَالرَّفْعُ هٰهُنَا كَاْلْجَرِّ فِي بَاْبِ الْجَرِّ</مقطع>
  <مقطع هوية='٤٠١٨٩'>وَاعْلَمْ أَنَّ كُلَّ مُضَاْفٍ إِلَى مَعْرِفَةٍ وَكَاْنَ لِلنَّكِرَةِ صِفَةً</مقطع>
  <مقطع هوية='٩٢٨٩٩'>فَإِنَّهُ إِذَا كَاْنَ مَوْصُوْفًا أَوْ وَصْفًا أَوْ خَبَرًا أَوْ مُبْتَدَأً بِمَنْزِلَةِ النَّكِرَةِ الْمُفْرَدَةِ</مقطع>
  <مقطع هوية='٧٥٢٢٤'>وَيَدُلُّكَ عَلَى ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ جَرِيْر</مقطع>
  <شاهدة هوية='٠٧٨٤٨'>
    <بيت>
      <مصراع>ظَلِلْنَا بِمُسْتَنِّ الْحَرُوْرِ كَأَنَّنًا</مصراع>
      <مصراع>لَدَى فَرَسٍ مُسْتَقْبِلِ الرِّيْحِ صَاْئِمِ</مصراع>
    </بيت>
  </شاهدة>
   
  <مقطع هوية='٥٢٦٢٤'>كَأَنَّهُ قَاْلَ <حرف>لَدَى مُسْتَقْبَلٍ صَاْئِمٍ</حرف>
  </مقطع>
  <مقطع هوية='٤١١٩٣'>وَقَاْلَ الْمَرَّاْرُ الْأَسَدِيُّ</مقطع>
  <شاهدة هوية='٩٦٩٠١'>
    <بيت>
      <مصراع>سَلِّ الْهُمُوْمَ بِكُلِّ مُعْطِي رَأْسِهِ</مصراع>
      <مصراع>نَاْجٍ مُخَاْلِطِ صُهْبَةٍ مُتَعَيِّسِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>مُغْتَاْلِ أَحْبُلِهِ مُبِيْنٍ عُنْقُه</مصراع>
      <مصراع>فِي مَنْكِبٍ زَبَنَ الْمَطِيَّ عَرَنْدَسِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨١٤٩١'>سَمِعْنَاْهُ مِمَّنْ يَرْوِيْهِ مِنَ الْعَرَبِ يُنْشِدُهُ هٰكَذًا</مقطع>
  <مقطع هوية='٣٤٩٦٠'>وَمِنْهُ أَيْضًا قَوْلُ ذِي الرُّمِّةِ</مقطع>
  <شاهدة هوية='٥١٦١٣'>
    <بيت>
      <مصراع>سَرَتْ تَخْبِطُ الظَّلْمَاْءَ مِن جَاْنِبَيْ قَسًا</مصراع>
      <مصراع>وَحُبَّ بِهَا مِنْ خَاْبِطِ اللَّيْلِ زَاْئِرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٤٢٨١'>فَكَأَنَّهُمْ قَاْلُوْا <حرف>بِكُلِّ مُعْطٍ رَأْسَهُ</حرف> و<حرف>مِنْ خَاْبِطٍ اللَّيْلَ</حرف>
  </مقطع>
  <مقطع هوية='٢٩٨٠٦'>وَمِثْلُهُ قَوْلُ جَرِيْر</مقطع>
   
  <شاهدة هوية='٤١٩٢٤'>
    <بيت>
      <مصراع>يَا رُبَّ غَاْبِطِنَا لَوْ كَاْنَ يَعْرِفُكُمْ</مصراع>
      <مصراع>لَاْقَى مُبَاْعِدَةً مِنْكُمْ وَحِرْمَاْنًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٨١١١'>وَقَاْلَ أَبُوْ مِحْجَنِ الثَّقَفِيّ</مقطع>
  <شاهدة هوية='٠٠٠٤٠'>
    <بيت>
      <مصراع>يَا رُبَّ مِثْلِكِ فِي النِّسَاْءِ غَرِيْرَةٍ</مصراع>
      <مصراع>بَيْضَاْءَ قَدْ مَتَّعْتُهَا بِطَلَاْقٍ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٦٢٧٤'>فَـ<حرف>رُبَّ</حرف> لَا يَقَعُ بَعْدَهَا إِلَّا نَكِرَةٌ</مقطع>
  <مقطع هوية='٢٥٢٧٢'>فَذٰلِكَ يَدُلُّكَ عَلَى أَنَّ <حرف>غَاْبِطِنَا</حرف> وَ<حرف>مِثْلِكَ</حرف> نَكِرَةٌ</مقطع>
  <مقطع هوية='٣٤٧١٥'>وَمِنْ ذٰلِكَ قَوْلُ الْعَرَبِ <قول هوية='٢٧١٤٧'>لِي عِشْرُوْنَ مِثْلَهُ</قول> وَ<حرف>مِاْئَةُ مِثْلِهِ</حرف></مقطع>
  <مقطع هوية='٨٩١٨٦'>فَأَجْرُوْا ذٰلِكَ بِمَنْزِلَةِ <حرف>عِشْرِيْنَ دِرْهَمًا</حرف> وَ<حرف>مِاْئَةِ دِرْهَمٍ</حرف>
  </مقطع>
  <مقطع هوية='١٦١٧١'>فَالْـ<حرف>مِثْلُ</حرف> وَأَخَوَاْتُهُ كَأَنَّهُ كَاْلَّذِي حُذِفَ مِنْهُ التَّنْوِيْنُ فِي قَوْلِهِ <حرف>مِثْلٌ زَيْدًا</حرف> وَ<حرف>قَيْدٌ الْأَوَاْبِدَ</حرف>
  </مقطع>
  <مقطع هوية='٥٢٢٣٧'>وَهٰذَا تَمْثِيْلٌ وَلٰكِنَّهَا كَـ<حرف>مِاْئِةٍ</حرف> و<حرف>عِشْرِيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٢١٥٦٣'>فَلَزِمَهَا شَيْءٌ وَاْحِدٌ وَهُوَ الْإِضَاْفَةِ</مقطع>
