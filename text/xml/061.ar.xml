     يعقوب="١-٣٧١"
     رقم="٦١">

    <عنوان>
       <مقطع هوية='٢٩٥٥٦'>هٰذَا بَاْبُ مَا يُنْصَبُ مِنْ الْمَصَاْدِرِ</مقطع>
       <مقطع هوية='١٤٧٢٤'>عَلَى إِضْمَاْرِ الْفِعْلِ غَيْرِ الْمُسْتَعْمَلِ إِظْهَاْرُهُ</مقطع>
   </عنوان>

    <مقطع هوية='٩٢١٧٤'>وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع هوية='٥٤٣٢٤'>
       <قول هوية='٩٧٢٦٣'>سَقْيًا وَرَعْيًا</قول></مقطع>
    <مقطع هوية='٨٦٧١٥'>وَنَحْوُ قَوْلِكَ <قول هوية='٧٢٧٩٣'>خَيْبَةً</قول></مقطع>
    <مقطع هوية='٠١٠٤٥'>وَ<قول هوية='٧٣٧٨٤'>دَفَرًا</قول></مقطع>
    <مقطع هوية='٣١٩١٢'>وَ<قول هوية='٨٦٧٩٠'>جَدْعًا وَعَقْرًا</قول></مقطع>
    <مقطع هوية='٩٨٦٨٦'>وَ<قول هوية='٠٨٦٣٥'>بُؤْسًا</قول></مقطع>
    <مقطع هوية='٣٢٥٧٥'>وَ<قول هوية='٩٦٣٥٣'>أُفَّةً وَتُفَّةً</قول></مقطع>
    <مقطع هوية='٧٥٤٩٢'>وَ<قول هوية='٧٧١٥٣'>بُعْدًا وَسُحْقًا</قول></مقطع>

    <مقطع هوية='٩٣٨٥٠'>وَمِنْ ذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع هوية='٥٤٠١٣'>
       <قول هوية='٠٨٢٥٢'>تَعْسًا وَتَبًّا</قول>
   </مقطع>
    <مقطع هوية='٨٧١٦٢'>وَ<قول هوية='٤١٥٠١'>جُوْعًا وَجُوْسًا</قول></مقطع>
    <مقطع هوية='٧٤٩٦٢'>وَنَحْوُ قَوْلِ ابْنِ مَيَّاْدَةَ</مقطع>
    <شاهدة هوية='٩٩٣٦٢'>
       <بيت>
          <مصراع>تَفَاْقَدَ قَوْمِى إِذْ يَبِيْعُوْنَ مُهْجَتَّى</مصراع>
          <مصراع>بِجَاْرِيّةً بَهْرَا لَهُمْ بَعْدَهَا بَهْرَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٣٨٣٣٢'>أَيْ <حرف>تَبًّا</حرف>
   </مقطع>
    <مقطع هوية='٦٦٧٨٨'>وَقَاْلَ</مقطع>
    <شاهدة هوية='٦٢٠٨٧'>
       <بيت>
          <مصراع>ثُمَّ قَاْلُوْا تُحِبُّهَا قُلْتُ بَهْرَا</مصراع>
          <مصراع>عَدَدَ الْنَّجْمِ وَالْحَصَى وَالْتُّرَاْبِ</مصراع>
      </بيت>
   </شاهدة>
     
    <مقطع هوية='٤١٩٨٩'>كَأَنَّهُ قَاْلَ</مقطع>
    <مقطع هوية='٨٥٩٦٠'>
       <قول هوية='٤٤٤١٠'>جَهْدًا</قول>
   </مقطع>
    <مقطع هوية='١٢٦٨٤'>أَيْ  <حرف>جَهْدِي ذٰلِكَ</حرف>
   </مقطع>
    <مقطع هوية='١٣٢٨٥'>وَإِنَّمَا يَنْتَصِبُ هٰذَا وَمَا أَشْبَهَهُ</مقطع>
    <مقطع هوية='٢٣١٥٧'>إِذَا ذُكِرَ مَذْكُوْرٌ</مقطع>
    <مقطع هوية='٤٨٥٥١'>فَدَعَوْتَ لَهُ أَوْ عَلَيْهِ</مقطع>
    <مقطع هوية='٨٦٣٣٨'>عَلَى إِضْمَاْرِ الْفِعْلِ</مقطع>
    <مقطع هوية='٤٧٩٠٣'>كَأَنَّكَ قُلْتَ</مقطع>
    <مقطع هوية='٩٤٥٦٤'>
       <قول هوية='٨٠٢٥٢'>سَقَاْكَ اللهُ سَقْيًا</قول>
   </مقطع>
    <مقطع هوية='٠٧٤٢١'>
       <قول هوية='٩٧٦٨٧'>وَرَعَاْكَ اللهُ رَعْيًا</قول>
   </مقطع>
    <مقطع هوية='٩١٨١٨'>
       <قول هوية='٥٥٣٧٨'>وَخَيَّبَكَ اللهُ خَيْبَةً</قول>
   </مقطع>
    <مقطع هوية='٤٠٤٢٤'>فَكُلُّ هٰذَا وَمَا أَشْبَاْهُهُ</مقطع>
    <مقطع هوية='٥٣٨٠٤'>عَلَى هٰذَا يَنْتَصِبُ</مقطع>
    <مقطع هوية='٩٨١٥٧'>وَإِنَّمَا اخْتُزِلَ الْفِعْلُ هٰهُنَا</مقطع>
    <مقطع هوية='٨٥١٩٤'>لِأَنَّهُمْ جَعَلُوْهُ بَدَلًا</مقطع>
    <مقطع هوية='٧٨٣١٠'>مِنَ اللَّّفْظِ بِاْلْفِعْلِ</مقطع>
    <مقطع هوية='٠٩٨٩٦'>كَمَا جُعِلَ  <حرف>اْلْحَذَرَ</حرف>  بَدَلًا مِنِ  <حرف>اْحْذَرْ</حرف>
   </مقطع>
    <مقطع هوية='٩٥٥٦٨'>وَكَذٰلِكَ هٰذَا</مقطع>
    <مقطع هوية='٩٨٥٠٩'>كَأَنَّهُ بَدَلٌ مِنْ</مقطع>
    <مقطع هوية='١١٤٨٥'>
       <قول هوية='٨٦٧٤٦'>سَقَاْكَ اللهُ</قول>
   </مقطع>
    <مقطع هوية='٨٩٦٠٢'>وَ<قول هوية='٢٩٥٣٩'>رَعَاْكَ اللهُ</قول>
   </مقطع>
    <مقطع هوية='٩٤٤٧٣'>وَمِنْ <قول هوية='٠٠٠١١'>خَيَّبَكَ اللهُ</قول>
   </مقطع>
    <مقطع هوية='٧٢٥٦٢'>وَمَا جَاْءَ مِنْهُ</مقطع>
    <مقطع هوية='٨٨١٢٤'>لَا يَظْهَرُ لَهُ فِعْلٌ</مقطع>
    <مقطع هوية='٢١٦٦٤'>فَهُوَ عَلَى هٰذَا الْمِثَاْلِ نَصْبٌ</مقطع>
    <مقطع هوية='٦٤٤٢٣'>كَأَنَّكَ جَعَلْتَ  <حرف>بَهْرًا</حرف>
   </مقطع>
    <مقطع هوية='٨٧٩٧٤'>بَدَلًا مِنْ</مقطع>
    <مقطع هوية='٦١٩٥٤'>
       <قول هوية='٧٠٥٠٧'>بَهَرَكَ الَّلَهُ</قول>
   </مقطع>
    <مقطع هوية='٦٥٩٤٣'>فَهٰذَا تَمْثِيْلٌ</مقطع>
    <مقطع هوية='٦٩٣٦١'>وَلَا يُتَكَلَّمُ بِهِ</مقطع>
    <مقطع هوية='٢٧٦٤٦'>وَمِمَّا يَدُلُّكَ أَيَضًا</مقطع>
    <مقطع هوية='٩٧١٢٩'>عَلَى أَنَّهُ عَلَى الْفِعْلِ نَصْبٌ</مقطع>
    <مقطع هوية='٠١٥٣٠'>أَنَّكَ لَمْ تَذْكُرْ شَيْئًا</مقطع>
    <مقطع هوية='٤٥٨١٠'>مِنْ هَذِهِ الْمَصَاْدِرِ</مقطع>
    <مقطع هوية='٨٨٧٥٢'>لِتَبْنِيَ عَلَيْهِ كَلَاْمًا</مقطع>
    <مقطع هوية='٦٩٩١١'>كَمَا يُبْنَى عَلَى  <حرف>عَبْدِ اللهِ</حرف>
   </مقطع>
    <مقطع هوية='٢٧٨٦٠'>إِذَا ابْتَدَأْتَهُ</مقطع>
    <مقطع هوية='٤٥٠٧٢'>وَأَنَّكَ لَمْ تَجْعَلْهُ مَبْنِيًّا عَلَى اسْمٍ مُضْمَرٍ فَي نِيَّتِكَ</مقطع>
    <مقطع هوية='٧٨٧٤٦'>وَلَكِنَّهُ عَلَى دُعَاْئِكَ لَهُ أَوْ عَلَيْهِ</مقطع>
    <مقطع هوية='٩١١٢١'>وَأَمَّا ذِكْرُهُمْ  <حرف>لَكَ</حرف>  بَعْدَ  <حرف>سَقْيًا</حرف></مقطع>
    <مقطع هوية='٩٩٨٢٨'>فَإِنَّمَا هُوَ لِيُبَيِّنُوْا الْمَعْنَى بِاْلدُّعَاْءِ</مقطع>
    <مقطع هوية='٠٢١٢٢'>وَرُبَّمَا تَرَكُوْهُ اسْتِغْنَاْءً</مقطع>
    <مقطع هوية='٣٩٣٥٨'>إِذَا عَرَفَ الدَّّاْعِي أَنَّهُ قَدْ عُلِمَ مَنْ يَعْنِيْ</مقطع>
    <مقطع هوية='٢٨٢٧٩'>وَرُبَّمَا جَاْءَ بِهِ عَلَى الْعِلْمِ تَوْكِيْدًا</مقطع>
    <مقطع هوية='٧٧٧٠١'>فَهٰذَا بِمَنْزِلَةِ قَوْلِكَ</مقطع>
    <مقطع هوية='٨٤٧٤١'>
        <حرف>بِكَ</حرف>  بَعْدَ قَوْلِكَ  <حرف>مَرْحَبًا</حرف>
   </مقطع>
    <مقطع هوية='٤٧٩٤٤'>يَجْرِيَاْنِ مَجْرًى وَاحِدًا فِيْمَا وَصَفْتُ لَكَ</مقطع>
    <مقطع هوية='٧٥٧٥٢'>وَقَدْ رَفَعَتِ الشُّعَرَاْءُ بَعْضَ هٰذَا</مقطع>
    <مقطع هوية='٠٥١٧٥'>فَجَعَلُوْهُ مُبْتَدَأً</مقطع>
    <مقطع هوية='٣٦٠١٢'>وَجَعَلُوْا مَا بَعْدَهُ مَبْنِيًّا عَلَيْهِ</مقطع>
    <مقطع هوية='١٣١٤٨'>قَاْلَ أَبُوْ زُبَيْدٍ</مقطع>
    <شاهدة هوية='٦٣١٨٦'>
       <بيت>
          <مصراع>أَقَاْمَ وَأَقْوَى ذَاْتَ يَوْمٍ وَخَيْبَةٌ</مصراع>
          <مصراع>لأَوَلِمِنَ يَلْقَى وَشَرٌّ مُيَسَّرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٦٣٩٦٠'>وَهٰذَا شَبِيْهٌ رَفْعُهُ بِبَيْتٍ</مقطع>
    <مقطع هوية='٠٣١٨٠'>سَمِعْنَاْهُ مِمَّنْ يُوْثَقُ بِعَرَبِيَّتِهِ</مقطع>
    <مقطع هوية='٣٣٧٦٦'>يَرْوِيْهِ لِقَوْمِهِ قَاْلَ</مقطع>
    <شاهدة هوية='٢٤٧٠٠'>
       <بيت>
          <مصراع>عَذِيْرّكِ مِنْ مَوْلَى إِذَا نِمْتَ لَمْ يَنَمْ</مصراع>
          <مصراع>يَقُوْلُ الْخَنَا أَوْ تَعْتَرِيْكَ زَّناْبرَهُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٨٥٢١٥'>فَلَمْ يَحْمِلْ الْكَلَاْمَ عَلَى  <حرف>اْعْذِرْنِي</حرف>
   </مقطع>
    <مقطع هوية='٣٦٧٨٠'>وَلَكِنَّهُ قَاْلَ</مقطع>
    <مقطع هوية='٤٠١٩٦'>
       <قول هوية='٣٨٦٤٤'>إِنَّمَا عُذْرُكَ أَيَّاْيَ مِنْ مَوْلًى هٰذَا أَمْرُهُ</قول>
   </مقطع>
     
    <مقطع هوية='٧٤٠١٢'>وَمِثْلُهُ قَوْلُ الشَّاْعِرِ</مقطع>
    <شاهدة هوية='٠٩٢٧٠'>
       <بيت>
          <مصراع>أَهَاْجَيْتُمُ حَسَّاْنَ عِنْدَ ذَكَاْئِهِ</مصراع>
          <مصراع>فَْغَيٌّ لَأَوْلَاْدِ الْحِمَاْسِ طَوِيْلُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٠٨٧٩٠'>وَفِيْهِ الْمَعْنَى الَّذِي يَكُوْنُ فَىِ الْمَنْصُوْبِ</مقطع>
    <مقطع هوية='٠٧٥٧٣'>كَمَا أَنَّ قَوْلَكَ <قول هوية='٦٦٣٢٥'>رَحْمَةُ اللهِ عَلَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٠٣٧٤٥'>فِيْهِ مَعْنَى الدُّعَاْءِ</مقطع>
    <مقطع هوية='١٢٣٢٩'>كَأَنَّهُ قَاْلَ <قول هوية='٥٦٥٠١'>رَحِمَهُ اللهُ</قول>
   </مقطع>

