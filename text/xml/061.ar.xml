    <عنوان>
       <مقطع هوية='٢٩٥٥٦'>هٰذَا بَاْبُ مَا يُنْصَبُ مِنْ الْمَصَاْدِرِ</مقطع>
       <مقطع هوية='١٤٧٢٤'>عَلَى إِضْمَاْرِ الْفِعْلِ غَيْرِ الْمُسْتَعْمَلِ إِظْهَاْرُهُ</مقطع>
   </عنوان>

   <مقطع هوية='٩٢١٧٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='٩٧٢٦٣'>سَقْيًا</قول>
   وَ<قول هوية='٩٣٢٥٠'>رَعْيًا</قول></مقطع>
    <مقطع هوية='٨٦٧١٥'>وَنَحْوُ قَوْلِكَ <قول هوية='٧٢٧٩٣'>خَيْبَةً</قول></مقطع>
    <مقطع هوية='٠١٠٤٥'>وَ<قول هوية='٧٣٧٨٤'>دَفْرًا</قول></مقطع>
    <مقطع هوية='٣١٩١٢'>وَ<قول هوية='٨٦٧٩٠'>جَدْعًا</قول>
    وَ<قول هوية='٠٤٨٩٠'>عَقْرًا</قول></مقطع>
    <مقطع هوية='٩٨٦٨٦'>وَ<قول هوية='٠٨٦٣٥'>بُؤْسًا</قول></مقطع>
    <مقطع هوية='٣٢٥٧٥'>وَ<قول هوية='٩٦٣٥٣'>أُفَّةً</قول>
    وَ<قول هوية='٧١٢٢٢'>تُفَّةً</قول></مقطع>
    <مقطع هوية='٧٥٤٩٢'>وَ<قول هوية='٧٧١٥٣'>بُعْدًا</قول>
    وَ<قول هوية='٢٦٤٤٥'>سُحْقًا</قول></مقطع>

    <مقطع هوية='٩٣٨٥٠'>وَمِنْ ذٰلِكَ قَوْلُكَ <قول هوية='٠٨٢٥٢'>تَعْسًا</قول>
    وَ<قول هوية='٧٨٣١٨'>تَبًّا</قول></مقطع>
    <مقطع هوية='٨٧١٦٢'>وَ<قول هوية='٤١٥٠١'>جُوْعًا</قول>
    وَ<قول هوية='١٥٠٤٩'>جُوْسًا</قول></مقطع>
    <مقطع هوية='٧٤٩٦٢'>وَنَحْوُ قَوْلِ <شاعر>ابْنِ مَيَّاْدَةَ</شاعر></مقطع>
    <شاهدة هوية='٩٩٣٦٢' شاعر="ابْنُ مَيَّاْدَةَ">
       <بيت>
          <مصراع>تَفَاْقَدَ قَوْمِى إِذْ يَبِيْعُوْنَ مُهْجَتِي</مصراع>
          <مصراع>بِجَاْرِيَةٍ <ثبات>بَهْرًا لَهُمْ</ثبات> بَعْدَهَا <ثبات>بَهْرَا</ثبات></مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٣٨٣٣٢'>أَيْ <حرف>تَبًّا</حرف></مقطع>

    <مقطع هوية='٦٦٧٨٨'>وَقَاْلَ</مقطع>
    <شاهدة هوية='٦٢٠٨٧'>
       <بيت>
          <مصراع>ثُمَّ قَاْلُوْا تُحِبُّهَا قُلْتُ <ثبات>بَهْرًا</ثبات></مصراع>
          <مصراع>عَدَدَ النَّجْمِ وَالْحَصَى وَالتُّرَاْبِ</مصراع>
      </بيت>
   </شاهدة>
   <مقطع هوية='٤١٩٨٩'>كَأَنَّهُ قَاْلَ <حرف>جَهْدًا</حرف> أَيْ <حرف>جَهْدِي ذٰلِكَ</حرف></مقطع>
    <مقطع هوية='١٣٢٨٥'>وَإِنَّمَا يَنْتَصِبُ هٰذَا وَمَا أَشْبَهَهُ</مقطع>
    <مقطع هوية='٢٣١٥٧'>إِذَا ذُكِرَ مَذْكُوْرٌ فَدَعَوْتَ لَهُ أَوْ عَلَيْهِ</مقطع>
    <مقطع هوية='٨٦٣٣٨'>عَلَى إِضْمَاْرِ الْفِعْلِ</مقطع>
    <مقطع هوية='٤٧٩٠٣'>كَأَنَّكَ قُلْتَ <قول هوية='٨٠٢٥٢'>سَقَاْكَ اللهُ سَقْيًا</قول></مقطع>
    <مقطع هوية='٠٧٤٢١'>وَ<قول هوية='٩٧٦٨٧'>رَعَاْكَ اللهُ رَعْيًا</قول>
   </مقطع>
    <مقطع هوية='٩١٨١٨'>وَ<قول هوية='٥٥٣٧٨'>خَيَّبَكَ اللهُ خَيْبَةً</قول></مقطع>
    <مقطع هوية='٤٠٤٢٤'>فَكُلُّ هٰذَا وَمَا أَشْبَاْهُهُ عَلَى هٰذَا يَنْتَصِبُ</مقطع>
    <مقطع هوية='٩٨١٥٧'>وَإِنَّمَا اخْتُزِلَ الْفِعْلُ هٰهُنَا</مقطع>
    <مقطع هوية='٨٥١٩٤'>لِأَنَّهُمْ جَعَلُوْهُ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع هوية='٠٩٨٩٦'>كَمَا جُعِلَ <حرف>الْحَذَرَ</حرف> بَدَلًا مِنِ <حرف>احْذَرْ</حرف></مقطع>
    <مقطع هوية='٩٥٥٦٨'>وَكَذٰلِكَ هٰذَا</مقطع>
    <مقطع هوية='٩٨٥٠٩'>كَأَنَّهُ بَدَلٌ مِنْ <قول هوية='٨٦٧٤٦'>سَقَاْكَ اللهُ</قول></مقطع>
    <مقطع هوية='٨٩٦٠٢'>وَ<قول هوية='٢٩٥٣٩'>رَعَاْكَ اللهُ</قول></مقطع>
    <مقطع هوية='٩٤٤٧٣'>وَمِنْ <قول هوية='٠٠٠١١'>خَيَّبَكَ اللهُ</قول></مقطع>
    <مقطع هوية='٧٢٥٦٢'>وَمَا جَاْءَ مِنْهُ لَا يَظْهَرُ لَهُ فِعْلٌ</مقطع>
    <مقطع هوية='٢١٦٦٤'>فَهُوَ عَلَى هٰذَا الْمِثَاْلِ نَصْبٌ</مقطع>
    <مقطع هوية='٦٤٤٢٣'>كَأَنَّكَ جَعَلْتَ <حرف>بَهْرًا</حرف> بَدَلًا مِنْ
       <قول هوية='٧٠٥٠٧'>بَهَرَكَ اللهُ</قول></مقطع>
    <مقطع هوية='٦٥٩٤٣'>فَهٰذَا تَمْثِيْلٌ وَلَا يُتَكَلَّمُ بِهِ</مقطع>
    <مقطع هوية='٢٧٦٤٦'>وَمِمَّا يَدُلُّكَ أَيَضًا عَلَى أَنَّهُ عَلَى الْفِعْلِ نَصْبٌ</مقطع>
    <مقطع هوية='٠١٥٣٠'>أَنَّكَ لَمْ تَذْكُرْ شَيْئًا مِنْ هَذِهِ الْمَصَاْدِرِ لِتَبْنِيَ عَلَيْهِ كَلَاْمًا</مقطع>
    <مقطع هوية='٦٩٩١١'>كَمَا يُبْنَى عَلَى <حرف>عَبْدِ اللهِ</حرف> إِذَا ابْتَدَأْتَهُ</مقطع>
    <مقطع هوية='٤٥٠٧٢'>وَأَنَّكَ لَمْ تَجْعَلْهُ مَبْنِيًّا عَلَى اسْمٍ مُضْمَرٍ فَي نِيَّتِكَ</مقطع>
    <مقطع هوية='٧٨٧٤٦'>وَلَكِنَّهُ عَلَى دُعَاْئِكَ لَهُ أَوْ عَلَيْهِ</مقطع>
    <مقطع هوية='٩١١٢١'>وَأَمَّا ذِكْرُهُمْ <حرف>لَكَ</حرف> بَعْدَ  <حرف>سَقْيًا</حرف></مقطع>
    <مقطع هوية='٩٩٨٢٨'>فَإِنَّمَا هُوَ لِيُبَيِّنُوْا الْمَعْنَى بِالدُّعَاْءِ</مقطع>
    <مقطع هوية='٠٢١٢٢'>وَرُبَّمَا تَرَكُوْهُ اسْتِغْنَاْءً</مقطع>
    <مقطع هوية='٣٩٣٥٨'>إِذَا عَرَفَ الدَّّاْعِي أَنَّهُ قَدْ عُلِمَ مَنْ يَعْنِي</مقطع>
    <مقطع هوية='٢٨٢٧٩'>وَرُبَّمَا جَاْءَ بِهِ عَلَى الْعِلْمِ تَوْكِيْدًا</مقطع>
    <مقطع هوية='٧٧٧٠١'>فَهٰذَا بِمَنْزِلَةِ قَوْلِكَ <حرف>بِكَ</حرف>  بَعْدَ قَوْلِكَ  <حرف>مَرْحَبًا</حرف></مقطع>
    <مقطع هوية='٤٧٩٤٤'>يَجْرِيَاْنِ مَجْرًى وَاْحِدًا فِيْمَا وَصَفْتُ لَكَ</مقطع>
    <مقطع هوية='٧٥٧٥٢'>وَقَدْ رَفَعَتِ الشُّعَرَاْءُ بَعْضَ هٰذَا</مقطع>
    <مقطع هوية='٠٥١٧٥'>فَجَعَلُوْهُ مُبْتَدَأً</مقطع>
    <مقطع هوية='٣٦٠١٢'>وَجَعَلُوْا مَا بَعْدَهُ مَبْنِيًّا عَلَيْهِ</مقطع>

    <مقطع هوية='١٣١٤٨'>قَاْلَ <شاعر>أَبُو زُبَيْدٍ</شاعر></مقطع>
    <شاهدة هوية='٦٣١٨٦' شاعر="أَبُو زُبَيْدٍ">
       <بيت>
          <مصراع>أَقَاْمَ وَأَقْوَى ذَاْتَ يَوْمٍ وَ<ثبات>خَيْبَةٌ</ثبات></مصراع>
          <مصراع>لِأَوَّلِ مَنْ يَلْقَى وَشَر مُيَسَّرٌ</مصراع>
      </بيت>
   </شاهدة>
   <مقطع هوية='٦٣٩٦٠'>وَهٰذَا شَبِيْهٌ رَفْعُهُ بِبَيْتٍ سَمِعْنَاْهُ مِمَّنْ يُوْثَقُ بِعَرَبِيَّتِهِ يَرْوِيْهِ لِقَوْمِهِ</مقطع>
   <مقطع هوية='٩٨٦٥٥'>قَاْلَ</مقطع>
    <شاهدة هوية='٢٤٧٠٠'>
       <بيت>
          <مصراع><ثبات>عَذِيْرُكَ</ثبات> مِنْ مَوْلًى إِذَا نِمْتَ لَمْ يَنَمْ</مصراع>
          <مصراع>يَقُوْلُ الْخَنَا أَوْ تَعْتَرِيْكَ زَنَاْبِرُهْ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٨٥٢١٥'>فَلَمْ يَحْمِلْ الْكَلَاْمَ عَلَى <حرف>اْعْذِرْنِي</حرف></مقطع>
    <مقطع هوية='٣٦٧٨٠'>وَلَكِنَّهُ قَاْلَ <قول هوية='٣٨٦٤٤'>إِنَّمَا عُذْرُكَ إِيَّاْيَ مِنْ مَوْلًى هٰذَا أَمْرُهُ</قول></مقطع>

    <مقطع هوية='٧٤٠١٢'>وَمِثْلُهُ قَوْلُ الشَّاْعِرِ</مقطع>
    <شاهدة هوية='٠٩٢٧٠'>
       <بيت>
          <مصراع>أَهَاْجَيْتُمُ حَسَّاْنَ عِنْدَ ذَكَاْئِهِ</مصراع>
          <مصراع>فَـ<ثبات>غَيٌّ</ثبات> لَأَوْلَاْدِ الْحِمَاْسِ طَوِيْلُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٠٨٧٩٠'>وَفِيْهِ الْمَعْنَى الَّذِي يَكُوْنُ فَىِ الْمَنْصُوْبِ</مقطع>
    <مقطع هوية='٠٧٥٧٣'>كَمَا أَنَّ قَوْلَكَ <قول هوية='٦٦٣٢٥'>رَحْمَةُ اللهِ عَلَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٠٣٧٤٥'>فِيْهِ مَعْنَى الدُّعَاْءِ</مقطع>
    <مقطع هوية='١٢٣٢٩'>كَأَنَّهُ قَاْلَ <قول هوية='٥٦٥٠١'>رَحِمَهُ اللهُ</قول>
   </مقطع>

