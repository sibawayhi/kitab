  <عنوان>
    <مقطع هوية='٩٦٨١٦'>هٰذَا بَاْبُ مَا يُحْذَفُ مِنْ السِّوَاْكِنِ
    إِذَا وَقَعَ بَعْدَهَا سَاْكِنٌ</مقطع>
  </عنوان>

  <مقطع هوية='٧٢٥٩٥'>وَذٰلِكَ ثَلَاْثَةُ أَحْرُفٍ</مقطع>
  <مقطع هوية='٤٩٠٤٧'>الْأَلِفُ</مقطع>
  <مقطع هوية='٨٧٦٣٦'>وَالْيَاْءُ الَّتِي قَبْلَهَا حَرْفٌ مَكْسُوْرٌ</مقطع>
  <مقطع هوية='٢٧١٤٢'>وَالْوَاْوُ الَّتِي قَبْلَهَا حَرْفٌ مَضْمُوْمٌ</مقطع>

  <رأس/>
  <مقطع هوية='٥٩٠٣٧'>فَأَمَّا حَذْفُ الْأَلِفِ</مقطع>
  <مقطع هوية='١٤٦٣٣'>فَقَوْلُكَ <قول هوية='١٩٧٢٨'>رَمَى الرَّجُلُ</قول>
  وَأَنْتَ تُرِيْدُ <حرف>رَمَىْ</حرف></مقطع>
  <مقطع هوية='٤٤٢٤٤'>وَ<حرف>لَمْ يَخَفْ</حرف></مقطع>
  <مقطع هوية='٣٣٧٩٩'>وَإِنَّمَا كَرِهُوْا تَحْرِيْكَهَا</مقطع>
  <مقطع هوية='٤٩٢٢٥'>لِأَنَّهَا إِذَا حُرِّكَتْ صَاْرَتْ يَاْءً أَوْ وَاوًا</مقطع>
  <مقطع هوية='٠٥٢٤٣'>فَكَرِهُوْا أَنْ تَصِيْرَ إِلَى مَا يَسْتَثْقِلُوْنَ</مقطع>
  <مقطع هوية='٩١٣٧٠'>فَحَذَفُوْا الْأَلِفَ حَيْثُ لَمْ يَخَاْفُوْا الْتِبَاْسًا</مقطع>

  <مقطع هوية='٥٣٧٩٢'>وَمِثْلُ ذٰلِكَ <قول هوية='٧٦٣٣١'>هَذِهِ حُبْلَى الرَّجُلِ</قول> وَ<حرف>مِعْزَى الْقَوْمِ</حرف></مقطع>
  <مقطع هوية='٨٥٥٤٥'>وَأَنْتَ تُرِيْدُ <حرف>الْمِعْزَى</حرف> وَ<حرف>الْحُبْلَى</حرف></مقطع>
  <مقطع هوية='٨٣٦٦٥'>كَرِهُوْا أَنْ يَصِيْرُوْا إِلَى مَا هُوَ أَثْقَلُ مِنَ الْأَلِفِ</مقطع>
  <مقطع هوية='٣٢٨٠٢'>فَحَذَفُوْا حَيْثُ لَمْ يَخَاْفُوْا الْتِبَاْسًا</مقطع>

  <مقطع هوية='٣٥٤٤٨'>وَمِثْلُ ذٰلِكَ قَوْلُهُمْ <حرف>رَمَتْ</حرف></مقطع>
  <مقطع هوية='٩٣٧٢٣'>وَقَاْلُوْا <حرف>رَمَيَا</حرف> فَجَاْؤُوْا بِالْيَاْءِ</مقطع>
  <مقطع هوية='٨٤٣٦٤'>وَقَاْلُوْا <حرف>غَزَوَا</حرف> فَجَاْؤُوْا بِالْوَاْوِ</مقطع>
  <مقطع هوية='٨٣٩٤٣'>لِئَلَّا يَلْتَبِسَ الِاثْنَاْنِ بِالْوَاْحِدِ</مقطع>

  <مقطع هوية='٧١٨١٢'>وَقَاْلُوْا <حرف>حُبْلَيَاْنِ</حرف> <حرف>ذِفْرَيَاْنِ</حرف></مقطع>
  <مقطع هوية='١٩٤٩١'>لِأَنَّهُمْ لَوْ حَذَفُوْا</مقطع>
  <مقطع هوية='٨٩٠١٢'>لَالْتَبَسَ بِمَا لَيْسَ فِي آخِرِهِ أَلِفُ التَّأْنِيْثِ مِنَ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٠٩٦٥٥'>وَأَنْتَ إِذَا قُلْتَ <قول هوية='٧١٦٢٧'>هَذِهِ حُبْلَى الرَّجُلِ</قول></مقطع>
  <مقطع هوية='٩٨٤٩٩'>وَ<قول هوية='٢٣٢٢٦'>مِنْ حُبْلَى الرَّجُلِ</قول></مقطع>
  <مقطع هوية='٩٦٧١٨'>عُلِمَ أَنَّ فِي آخِرِهَا أَلِفًا</مقطع>
  <مقطع هوية='٢٢٠٠٣'>فَإِنْ قُلْتَ <قبس>قَدْ تَقُوْلُ <قول هوية='١٤٨٧٠'>رَأَيْتُ حُبْلَى الرَّجُلِ</قول></قبس></مقطع>
  <مقطع هوية='٠٠٩٣٦'><قبس>فَيُوَاْفِقُ اللَّفْظُ لَفْظَ مَا لَيْسَتْ فِي آخِرِهِ أَلِفُ التَّأْنِيْثِ</قبس></مقطع>
  <مقطع هوية='٥٩٩٠٥'>فَإِنَّ هٰذَا لَا يَلْزَمُهُ فِي كُلِّ مَوْضِعٍ</مقطع>
  <مقطع هوية='٦٤٣٢٨'>وَأَنْتَ لَوْ قُلْتَ <حرف>حُبْلَاْنِ</حرف></مقطع>
  <مقطع هوية='٤٤١٧٢'>لَمْ تَجِدْ مَوْضِعًا إِلَّا وَالْأَلِفُ مِنْهُ سَاْقِطَةٌ</مقطع>
  <مقطع هوية='٤٧٧٨٣'>وَلَفْظُ الِاسْمِ حِيْنَئِذٍ وَلَفْظُ مَا لَيْسَتْ فِيْهِ الْأَلِفُ سَوَاْءٌ</مقطع>

  <رأس/>
  <مقطع هوية='٠٧٩١٧'>وَأَمَّا حَذْفُ الْيَاْءِ الَّتِي قَبْلَهَا كَسْرَةٌ</مقطع>
  <مقطع هوية='٦٠٩٤٩'>فَقَوْلُكَ <قول هوية='٤٧٩٥٩'>هُوَ يَرْمِي الرَّجُلَ</قول></مقطع>
  <مقطع هوية='٥٩٠٠٧'>وَ<حرف>يَقْضِي الْحَقَّ</حرف></مقطع>
  <مقطع هوية='٦٧٠٤٧'>وَأَنْتَ تُرِيْدُ <حرف>يَقْضِيْ</حرف> وَ<حرف>يَرْمِيْ</حرف></مقطع>
  <مقطع هوية='٥١٨٣٥'>كَرِهُوْا الْكَسْرَ</مقطع>
  <مقطع هوية='٢٣١٢٥'>كَمَا كَرِهُوْا الْجَرَّ فِي <حرف>قَاْضٍ</حرف></مقطع>
  <مقطع هوية='٤٠٦٢٥'>وَالضَّمَّ فِيْهِ كَمَا كَرِهُوْا الرَّفْعَ فِيْهِ</مقطع>
  <مقطع هوية='٠٨٢٤٣'>وَلَمْ يَكُوْنُوْا لَيَفْتَحُوْا فَيَلْتَبِسَ بِالنَّصْبِ</مقطع>
  <مقطع هوية='٥٩١٤٢'>لِأَنَّ سَبِيْلَ هٰذَا أَنْ يُكْسَرَ</مقطع>
  <مقطع هوية='٩٣٦٦٢'>فَحَذَفُوْا حَيْثُ لَمْ يَخَاْفُوْا الْتِبَاْسًا</مقطع>

  <رأس/>
  <مقطع هوية='١١٤٩٦'>وَأَمَّا حَذْفُ الْوَاْوِ الَّتِي قَبْلَهَا حَرْفٌ مَضْمُوْمٌ</مقطع>
  <مقطع هوية='٨٠٢١٧'>فَقَوْلُكَ <قول هوية='٠٣١٠٥'>يَغْزُو الْقَوْمَ</قول>
  وَ<قول هوية='٩٣٨٤٨'>يَدْعُو النَّاْسَ</قول></مقطع>
  <مقطع هوية='٦٠٢٣٣'>وَكَرِهُوْا الْكَسْرَ كَمَا كَرِهُوْا الضَّمَّ هُنَاْكَ</مقطع>
  <مقطع هوية='٧٢٧١٤'>وَكَرِهُوْا الضَّمَّ هُنَا كَمَا كَرِهُوْا الْكَسْرَ فِي <حرف>يَرْمِي</حرف></مقطع>

  <رأس/>
  <مقطع هوية='٢٦١٠٣'>وَأَمَّا <قول هوية='١٢٣٥٤'>اخْشَوُا الْقَوْمَ</قول></مقطع>
  <مقطع هوية='٤٦٩١٥'>وَ<قول هوية='٢٩٤٣٨'>رَمَوُا الرَّجُلَ</قول></مقطع>
  <مقطع هوية='٥٧٦٥٢'>وَ<قول هوية='٤٢٦٦٠'>اخْشَيِ الرَّجُلَ</قول></مقطع>
  <مقطع هوية='٩٦٣٢٧'>فَإِنَّهُمْ لَوْ حَذَفُوْا لَالْتَبَسَ الْوَاْحِدُ بِالْجَمِيْعِ
  وَالْأُنْثَى بِالذَّكَرِ</مقطع>
  <مقطع هوية='٣٦٣١٥'>وَلَيْسَ هُنَا مَوْضِعُ الْتِبَاْسٍ</مقطع>
  <مقطع هوية='٥٩٨٠٥'>وَمَعَ هٰذَا أَنَّ قَبْلَ هَذِهِ الْوَاْوِ أَخَفَّ الْحَرَكَاْتِ</مقطع>
  <مقطع هوية='٣٣٢٥٥'>وَكَذٰلِكَ يَاْءُ <حرف>اخْشَى</حرف></مقطع>
  <مقطع هوية='٦٦٩٠٧'>وَمَا قَبْلَ الْيَاْءِ مِنْهَا فِي <حرف>يَقْضِي</حرف> وَنَحْوِهِ</مقطع>
  <مقطع هوية='٩٥٧٢٤'>وَمَا قَبْلَ الْوَاْوِ مِنْهَا فِي <حرف>يَدْعُو</حرف> وَنَحْوِهِ</مقطع>
  <مقطع هوية='٨٣٤٧٢'>فَاجْتَمَعَ أَنَّهُ أَثْقَلُ وَأَنَّهُ لَا يُخَاْفُ الِالْتِبَاْسُ فَحُذِفَ</مقطع>
  <مقطع هوية='٤٦٠٩٠'>فَأُجْرِيَتْ هَذِهِ السِّوَاْكِنُ الَّتِي حَرَّكُوْا مَا قَبْلَهَا مِنْهَا مَجْرًى وَاْحِدًا</مقطع>

  <مقطع هوية='٦٨١٠٣'>وَمِثْلُ ذٰلِكَ <حرف>لَمْ يَبِعْ</حرف> وَ<حرف>لَمْ يَقُلْ</حرف></مقطع>
  <مقطع هوية='٠٠٢٥٠'>وَلَوْ لَمْ يَكُنْ ذٰلِكَ فِيْهَا مِنْ الِاسْتِثْقَاْلِ</مقطع>
  <مقطع هوية='٩٠٩٠١'>لَأُجْرِيَتْ مَجْرَى <حرف>لَمْ يَخَفْ</حرف></مقطع>
  <مقطع هوية='٥٣٦٣٨'>لِأَنَّهُ لَيْسَ لِاسْتِثْقَاْلٍ لَمَّا بَعْدَهَا حُذِفَتْ</مقطع>
  <مقطع هوية='٧٦٥١٦'>وَذٰلِكَ يَاْءُ <حرف>يَهَاْبُ</حرف></مقطع>
  <مقطع هوية='١٩٢١٩'>وَوَاْوُ <حرف>يَخَاْفُ</حرف></مقطع>
  <مقطع هوية='٦٣٥٢٤'>وَقَدْ بُيِّنَ ذٰلِكَ</مقطع>

