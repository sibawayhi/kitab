<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٣٤"
     درنبورج="١-٢٠١"
     البكاء="٢-١٠٢"
     هارون="٢-٣٦"
     يعقوب="٢-٣٢"
     رقم="١١١">

  <عنوان>
    <مقطع هوية='٤٤٤٣٣'>هٰذَا بَاْبُ مَا جَرَى مِنَ الْأَسْمَاْءِ الَّتِي مِنَ الْأَفْعَاْلِ</مقطع>
    <مقطع هوية='٥٦٨٣٠'>وَمَا أَشْبَهَهَا مِنَ الصِّفَاْتِ الَّتِي لَيْسَتْ بعَمَلٍ</مقطع>
    <مقطع هوية='٤٩٤٢١'>نَحْوُ الْـ<حرف>ـحَسَنِ</حرف> وَالْـ<حرف>ـكَرِيْمِ</حرف> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='٧٧٨٨٨'>مَجْرَى الْفِعْلِ إِذَا أَظْهَرْتَ بَعْدَهُ الْأَسْمَاْءَ أَوْ أَضْمَرْتَهَا</مقطع>
  </عنوان>
  <مقطع هوية='١٤١٤٠'>وَذٰلِكَ قَوْلُكَ <قول هوية='٥٩٢٩٦'>مَرَرْتُ بِرَجُلٍ حَسَنٍ أَبَوَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٣٩٦٣٤'>وَ<قول هوية='٢٦٢٠٧'>أَحَسَنٌ أَبَوَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٣٣٧٨٠'>وَ<قول هوية='٦٣٢٥٤'>أَخَاْرِجٌ قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٥٣٣'>فَصَاْرَ هٰذَا بِمَنْزِلَةِ <قول هوية='٤٣٠١٠'>قَاْلَ أَبَوَاْكَ</قول> وَ<قول هوية='١٥٣٩٢'>قَاْلَ قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٤٦٣٧٦'>عَلَى حَدِّ مَنْ قَاْلَ <قول هوية='٤٢٦٢٩'>قَوْمُكَ حَسَنُوْنَ</قول> إِذَا أَخَّرُوْا</مقطع>
  <مقطع هوية='٣٨٧٢٢'>فِيَصِيْرُ [ هٰذَا ] بِمَنْزِلَةِ <قول هوية='٧٣١٩٦'>أَذَاْهِبٌ أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع هوية='١٧٤٣٤'>وَ<قول هوية='٧٨٠٢٨'>أَمُنْطَلِقٌ قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٥٠٧٧٥'>فَإِنْ بَدَأْتَ بِالِاسْمِ قَبْلَ الصِّفَةِ</مقطع>
  <مقطع هوية='٣٤٥٣٨'>قُلْتَ <قول هوية='٤٢٢٢٩'>قَوْمُكَ مُنْطَلِقُوْنَ</قول>
  </مقطع>
  <مقطع هوية='١٩٩٧٦'>وَ<قول هوية='٣٥٦٩٨'>قَوْمُكَ حَسَنُوْنَ</قول>
  </مقطع>
  <مقطع هوية='٢٨٧٦٨'>كَمَا تَقُوْلُ <قول هوية='٣٠١٣٧'>أَبَوَاْكَ قَاْلَا ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٢٦٦٠'>وَ<قول هوية='٢٤٩٠٦'>قَوْمُكَ قَاْلُوْا ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٨٦٣٣٠'>فَإِنْ بَدَأْتَ بِنَعْتٍ مُؤَنَّثٍ فَهُوَ يَجْرِي مَجْرَى الْمُذَكَّرِ إِلَّا أَنَّكَ تُدْخِلُ الْهَاْءَ</مقطع>
  <مقطع هوية='٥٥٣٠٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='١٣١٠٢'>أَذَاْهِبَةٌ جَاْرِيَتُكَ <!--هاْروْن جَاْرِيَتَاْكَ --></قول>
  </مقطع>
  <مقطع هوية='٧٣٥٢٧'>وَ<قول هوية='٤١٨٤٤'>أَكَرِيْمَةٌ نِسَاْؤُكُمْ</قول>
  </مقطع>
  <مقطع هوية='٠١١٢٧'>فَصَاْرَتْ الْهَاْءُ فِي الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٧٣٠٦٨'>بِمَنْزِلَةِ التَّاْءِ فِي الْفِعْلِ إِذَا قُلْتَ <قول هوية='٢٨٩٣٧'>قَاْلَتْ نِسَاْؤُكُمْ</قول>
  </مقطع>
  <مقطع هوية='٥٩١٦٢'>وَ<قول هوية='٨٩٣١٣'>ذَهَبَتْ جَاْرِيَتُكَ <!--اْلبكاْء جَاْرِيَتَاْكَ --></قول>
  </مقطع>
  <مقطع هوية='٨٨٤٩٩'>وَإِنَّمَا قُلْتَ <قول هوية='٨٨٨٧٠'>أَكَرِيْمَةٌ نِسَاْؤُكُمْ</قول>
  </مقطع>
  <مقطع هوية='٤٧٥٢١'>عَلَى قَوْلِ مَنْ قَاْلَ <قول هوية='٠٤٦٦٤'>أَنِسَاْؤُكُمْ كَرِيْمَاْتٌ</قول>
  </مقطع>
  <مقطع هوية='٦٠٣٦٩'>إِذَا أَخَّرَ الصِّفَةَ</مقطع>
  <مقطع هوية='٢٠٧١٩'>وَاْلْأَلِفُ وَالتَّاْءُ</مقطع>
  <مقطع هوية='٣٦٥٥٠'>وَاْلْوَاْوُ [ وَالْيَاْءُ ] وَالنُّوْنُ فِي الْجَمِيْعِ</مقطع>
  <مقطع هوية='٠٨٨٢١'>وَاْلْأَلِفُ وَالنُّوْنُ فِي التَّثْنِيَّةِ</مقطع>
  <مقطع هوية='١٠٣٥١'>بِمَنْزِلَةِ الْوَاْوِ وَالْأَلِفِ فِي <حرف>قَاْلَا</حرف> وَ<حرف>قَاْلُوْا</حرف>
  </مقطع>
  <مقطع هوية='٥٢٦٣١'>وَبِمَنْزِلَةِ الْوَاْوِ وَالنُّوْنِ فِي <حرف>يَقُوْلُوْنَ</حرف>
  </مقطع>
  <مقطع هوية='٣٧١٥٥'>وَكَذٰلِكَ <قول هوية='٠٥٥٢٩'>أَقُرَشِيٌّ قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٥١٢٩٢'>وَ<قول هوية='٩١٧١٥'>أَقُرَشِيٌّ أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٢١٥٩٥'>إِذَا أَرَدْتَ الصِّفَةَ جَرَى مَجْرَى <حرف>حَسَنٍ</حرف> وَ<حرف>كَرِيْمٍ</حرف>
  </مقطع>
  <مقطع هوية='٦١٤٢٤'>وَإِنَّمَا قَاْلَتْ الْعَرَبُ <قول هوية='١٤٧٠٠'>قَاْلَ قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='١٥٧٦٨'>وَ<قول هوية='١٨٧٧٠'>قَاْلَ أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٢٢٣٥٣'>لِأَنَّهُمْ اكْتَفَوْا بِمَا أَظْهَرُوْا</مقطع>
  <مقطع هوية='٤٠٦٨٤'>عَنْ أَنْ يَقُوْلُوْا <قول هوية='٧٥٥٨٤'>قَاْلَا أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٥٧٣٨٧'>وَ<قول هوية='٤٦٠٧٤'>قَاْلُوْا قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٥٥٣٤٢'>فَحَذَفُوْا ذٰلِكَ اكْتِفَاْءً بِمَا أَظْهَرُوْا</مقطع>
  <مقطع هوية='٩٨٧٢٢'>قَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة هوية='٣٨٣٢٢'>
    <بيت>
      <مصراع>أَلَيْسَ أَكْرَمَ خَلْقِ اللهِ قَدْ عَلِمُوْا</مصراع>
      <مصراع>عِنْدَ الْحِفَاْظِ بَنُو عَمْرِو بْنِ حُنْجُوْدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٩٥١١'>صَاْرَ <حرف>لَيْسَ</حرف> هٰهُنَا بِمَنْزِلَةِ <قول هوية='٢٨٣٧٧'>ضَرَبَ قَوْمَكَ بَنُو فُلَاْنٍ</قول>
  </مقطع>
  <مقطع هوية='٠١٩٧٧'>لِأَنَّ <حرف>لَيْسَ</حرف> فِعْلٌ</مقطع>
  <مقطع هوية='٢٢٨٦٠'>فَإِذَا بَدَأْتَ بِاْلِٱسْمِ قُلْتَ <قول هوية='١٧٣٧٨'>قَوْمُكَ قَاْلُوْا ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٣٨٨٢٩'>وَ<قول هوية='٧٠٤٦٣'>أَبَوَاْكَ قَدْ ذَهَبَا</قول>
  </مقطع>
  <مقطع هوية='٢٧٨٩٩'>لِأَنَّهُ قَدْ وَقَعَ هٰهُنَا إِضْمَاْرٌ فِي الْفِعْلِ وَهُوَ أَسْمَاْؤُهُمْ</مقطع>
  <مقطع هوية='١٥٦٢٢'>فَلَا بُدَّ لِلْمُضْمَرِ أَنْ يَجِيْءَ بِمَنْزِلَةِ الْمُظْهَرِ</مقطع>
  <مقطع هوية='٤٧٤٦٠'>وَحِيْنَ قُلْتَ <قول هوية='١٩٦٥٨'>ذَهَبَ قَوْمُكَ</قول> لَمْ يَكُنْ فِي <حرف>ذَهَبَ</حرف> إِضْمَاْرٌ</مقطع>
  <مقطع هوية='٩٣٥١١'>وَكَذٰلِكَ <قول هوية='٩٢٨٢٥'>قَاْلَتْ جَاْرِيَتَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٣٢٩٣٥'>وَ<قول هوية='٤١٦٤٤'>جَاْءَتْ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٥٥٠'>إِلَّا أَنَّهُمْ أَدْخَلُوْا التَّاْءَ لِيَفْصِلُوْا بَيْنَ التَّأْنِيْث وَالتَّذْكِيْر</مقطع>
  <مقطع هوية='٥٠٠٥٦'>وَحَذَفُوْا الْأَلِفَ وَالنُّوْنَ لَمَّا بَدَءُوْا بِاْلْفِعْلِ فِي تَثْنِيَةِ الْمُؤَنَّثِ وَجَمْعِهِ</مقطع>
  <مقطع هوية='٠٤١٠١'>كَمَا حَذَفُوْا ذٰلِكَ فِي التَّذْكِيْرِ</مقطع>
  <مقطع هوية='٨٨٠٧٨'>فَإِنْ بَدَأْتَ بِاْلِٱسْمِ قُلْتَ <قول هوية='٥٣٩٦٤'>نِسَاْؤُكَ قُلْنَ ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٢٣٤٩'>كَمَا قُلْتَ <قول هوية='٨٤٨٨٧'>قَوْمُكَ قَاْلُوْا ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٠٣٣١٠'>وَتَقُوْلُ <قول هوية='٨٨٣٦٩'>جَاْرِيَتَاْكَ قَاْلَتَا</قول>
  </مقطع>
  <مقطع هوية='٨٧٢٥٩'>كَمَا تَقُوْلُ <قول هوية='٦٣٠٦٠'>أَبَوَاْكَ قَاْلَا</قول>
  </مقطع>
  <مقطع هوية='٣١٣٢٠'>لِأَنَّ فِي <حرف>قُلْنَ</حرف> وَ<حرف>قَاْلَتَا</حرف> إِضْمَاْرًا</مقطع>
  <مقطع هوية='٢١٤٨٠'>كَمَا كَاْنَ فِي <حرف>قَاْلَا</حرف> وَ<حرف>قَاْلُوْا</حرف>
  </مقطع>
  <مقطع هوية='٦٩٦٣٥'>وَإِذَا قُلْتَ <قول هوية='٤٦٣٢٠'>ذَهَبَتْ جَاْرِيَتَاْكَ</قول>
  </مقطع>
  <مقطع هوية='١٧٤١٩'>أَوْ <قول هوية='٧١٥١٤'>جَاْءَتْ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع هوية='٨٥٩٢٩'>فَلَيْسَ فِي الْفِعْلِ إِضْمَاْرٌ</مقطع>
  <مقطع هوية='٩٧٨٣٠'>فَفَصَلُوْا بَيْنَهُمَا فِي التَّأْنِيْثِ وَالتَّذْكِيْرِ</مقطع>
  <مقطع هوية='٩٧٧٨٩'>وَلَمْ يَفْصِلُوْا بَيْنَهُمَا فِي التَّثْنِيَّةِ وَالْجَمْعِ</مقطع>
  <مقطع هوية='٠٨٩٩٦'>وَإِنَّمَا جَاْءُوْا بِاْلتَّاْءِ لِلتَّأْنِيْثِ لِأَنَّهَا لَيْسَتْ عَلَاْمَةَ إِضْمَاْرٍ كَاْلْوَاْوِ وَالْأَلِفِ</مقطع>
  <مقطع هوية='٢١٨٨٢'>وَإِنَّمَا هِيَ كَهَاْءِ التَّأْنِيْثِ فِي <حرف>طَلْحَةٍ</حرف> وَلَيْسَتْ بِٱسْمٍ</مقطع>
  <مقطع هوية='٧٩٩١٩'>وَقَاْلَ بَعْضُ الْعَرَبِ <قول هوية='٢١٥٧٤'>قَاْلَ فُلَاْنَةُ</قول>
  </مقطع>
  <مقطع هوية='٩٥٢٥٤'>وَكُلَّمَا طَاْلَ الْكَلَاْمُ فَهُوَ أَحْسَنُ</مقطع>
  <مقطع هوية='٦١١٣٩'>نَحْوُ قَوْلِكَ <قول هوية='٠٩٣٥٦'>حَضَرَ الْقَاْضِيَ ٱمْرَأَةٌ</قول>
  </مقطع>
  <مقطع هوية='٥٦٨٩٤'>لِأَنَّهُ إِذَا طَاْلَ الْكَلَاْمُ كَاْنَ الْحَذْفُ أَجْمَلَ</مقطع>
  <مقطع هوية='٧٣٠٢١'>وَكَأَنَّهُ شَيْءٌ يَصِيْرُ بَدَلًا مِنْ شَيْءٍ كَاْلْمُعَاْقَبَةِ</مقطع>
  <مقطع هوية='٠١٠٥٢'>نَحْوُ قَوْلِكَ <حرف>زَنَاْدِقَةٌ</حرف> وَ<حرف>زَنَاْدِيْقُ</حرف>
  </مقطع>
  <مقطع هوية='٠٦٢٥٩'>فَتَحْذَفُ الْيَاْءَ لِمَكَاْنِ الْهَاْءِ</مقطع>
  <مقطع هوية='٧٨٢٥٥'>وَكَمَا قَاْلُوْا فِي <حرف>مُغْتَلِمٍ</حرف>
  <حرف>مُغَيْلِمٍ</حرف> وَ<حرف>مُغَيْلِيْمٍ</حرف>
  </مقطع>
  <مقطع هوية='٣٣١٩٨'>وَكَأَنَّ الْيَاْءُ صَاْرَتْ بَدَلًا مِمَّا حَذَفُوْا</مقطع>
  <مقطع هوية='٤٣٣٦٩'>وَإِنَّمَا حَذَفُوْا التَّاْءَ لِأَنَّهُم صَاْرَ عِنْدَهُم إِظْهَاْرُ الْمُؤَنَّثِ يَكْفِيْهِمْ عَنْ ذِكْرِهِمْ التَّاْءِ</مقطع>
  <مقطع هوية='٤٨٦١٦'>كَمَا كَفَاْهُمْ الْجَمِيْعُ وَالْإِثْنَاْنِ حِيْنَ أَظْهَرُوْهُمْ عَنْ الْوَاْوِ وَالْأَلِفِ</مقطع>
  <رأس هوية="">
    <عنوان>الحَيَوَاْنُ واْلمَوَاْتُ</عنوان>
  </رأس>
  <مقطع هوية='١١١٤٦'>وَهٰذَا فِي الْوَاْحِدِ مِنَ الْحَيَوَاْنِ قَلِيْلٌ</مقطع>
  <مقطع هوية='٧٥٧٥٧'>و[ هُوَ ] فِي الْمَوَاْتِ كَثِيْرٌ</مقطع>
  <مقطع هوية='٥٦٢٦٢'>فَرَقُوْا بَيْنَ الْمَوَاْتِ وَالْحَيَوَاْنِ كَمَا فَرَقُوْا بَيْنَ الْآدَمِيِيْنَ وَغَيْرِهِمْ</مقطع>
  <مقطع هوية='١٣٩١٧'>تَقُوْلُ <قول هوية='٣٦٦١١'>هُمْ ذَاْهِبُوْنَ</قول>
  </مقطع>
  <مقطع هوية='٨٩٣٩٨'>وَ<قول هوية='٨٠٠١٢'>هُمْ فِي الدَّاْرِ</قول>
  </مقطع>
  <مقطع هوية='٢٩٥٣٦'>وَلَا تَقُوْلُ <قول هوية='٣٥٦١٧'>جَمَاْلُكَ ذَاْهِبُوْنَ</قول>
  </مقطع>
  <مقطع هوية='٢١٦١٦'>وَلَا تَقُوْلُ <قول هوية='٤٤٤٦٨'>هُمْ فِي الدَّاْرِ</قول> وَأَنْتَ تَعْنِي الْجَمَاْلَ</مقطع>
  <مقطع هوية='٠٥٣٠٠'>وَلٰكِنَّكَ تَقُوْلُ <حرف>هِيَ</حرف> وَ<حرف>هُنَّ</حرف>
  <حرف>ذَاْهِبَةٌ</حرف> وَ<حرف>ذَاْهِبَاْتٌ</حرف>
  </مقطع>
  <مقطع هوية='٥١٤٦٧'>وَمِمَّا جَاْءَ فِي الْقُرآنِ مِنَ الْمَوَاْتِ قَدْ حُذِفَتْ فِيْهِ التَّاْءُ</مقطع>
  <مقطع هوية='٩١٤٢٨'>قَوْلُهُ عَزَّ وَجَلَّ <آية هوية='٠٧٥٨٩' سورة="٢" آية="٢٧٥">فَمَنْ جَاْءَهُ مَوْعِظَةٌ مِّن رَّبِّهِ فَاْنْتَهَىٰ</آية>
  </مقطع>
  <مقطع هوية='٥٩٩٨٥'>وَقَوْلُهُ <آية هوية='٥٧٥١١' سورة="٣" آية="١٠٥">مِنۢ بَعْدِ مَا جَآءَهُمُ ٱلْبَيِّنَـٰتُ</آية>
  </مقطع>
  <مقطع هوية='٩٩٥٥٤'>وَهٰذَا النَّحْوُ كَثِيْرٌ فِي الْقُرآنِ</مقطع>
  <مقطع هوية='٥٤٧٤٥'>وَهُوَ فِي [ الْوَاْحِدَةِ إِذَا كَاْنَتْ مِنَ ] الْآدَمِيِيْنَ أَقَلُّ مِنْهُ فِي سَاْئِرِ الْحَيَوَاْنِ</مقطع>
  <مقطع هوية='٣٧٢٩٦'>أَلَا تَرَى أَنَّ لَهُمْ فِي الْجَمِيْعِ حَاْلًا لَيْسَتْ لِغَيْرِهِم</مقطع>
  <مقطع هوية='٠٨٣٩٢'>لِأَنَّهُم الْأَوَّلُوْنَ وَأَنَّهُمْ قَدْ فُضِّلُوْا بِمَا لَمْ يُفَضَّلْ بِهِ غَيْرُهُم مِنَ الْعَقْلِ وَالْعِلْمِ</مقطع>
  <مقطع هوية='٦٦٣٨٢'>وَأَمَّا الْجَمِيْعُ مِنَ الْحَيَوَاْنِ الَّذِي يُكَسَّرُ عَلَيْهِ الْوَاْحِدُ</مقطع>
  <مقطع هوية='٦٩٤١٣'>فَبِمَنْزِلَةِ الْجَمِيْعِ مِنْ غَيْرِهِ الَّذِي يُكَسَّرُ عَلَيْهِ الْوَاْحِدُ [فِي أَنَّهُ مُؤَنَّثٌ]</مقطع>
  <مقطع هوية='١٩٨٤٧'>أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول هوية='٦٢٣٨٣'>هُوَ رَجُلٌ</قول>
  </مقطع>
  <مقطع هوية='٣٧٦٩٢'>وَتَقُوْلُ <قول هوية='٨٥٦٠٦'>هِيَ الرِّجَاْلُ</قول> فَيَجُوْزُ لَكَ</مقطع>
  <مقطع هوية='٩٩٣٢١'>وَتَقُوْلُ <قول هوية='٥٤٧٦٢'>هُوَ جَمَلٌ</قول>
  </مقطع>
  <مقطع هوية='٤٥٥٧١'>وَ<قول هوية='٨٤٩٢٤'>هِيَ الْجِمَاْلُ</قول>
  </مقطع>
  <مقطع هوية='١٤٦٩٢'>وَ<قول هوية='٠٣٢٤١'>هُوَ عَيْرٌ</قول>
  </مقطع>
  <مقطع هوية='٤٢٥٨٩'>وَ<قول هوية='٣٧٤٢٢'>هِيَ الْأَعْيَاْرُ</قول>
  </مقطع>
  <مقطع هوية='٠٦٧٩٧'>فَجَرَتْ هٰذِهِ كُلُّهَا مَجْرَى <قول هوية='٠٥٠٦٣'>هِيَ الْجُذُوْعُ</قول>
  </مقطع>
  <مقطع هوية='٨٩٣٢٢'>وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
  <مقطع هوية='٢٤٩٢٣'>يَجْرِي هٰذَا الْمَجْرَى لِأَنَّ الْجَمِيْعَ يُؤَنَّثُ وَإِنْ كَاْنَ كُلُّ وَاحِدٍ مِنْهُ مُذَكَّرًا</مقطع>
  <مقطع هوية='٣٨١٨٩'>مِنَ الْحَيَوَاْنِ</مقطع>
  <مقطع هوية='٦١٨٣٣'>فَلَمَّا كَاْنَ كَذٰلِكَ صَيَّرُوْهُ بِمَنْزِلَةِ الْمَوَاْتِ</مقطع>
  <مقطع هوية='٠٠٥٠٤'>لِأَنَّهُ قَدْخَرَجَ مِنَ الْأَوَّلِ الْأَمْكَنِ حَيْثُ أَرَدْتَ الْجَمِيْعَ</مقطع>
  <مقطع هوية='٣٣٤٤٦'>فَلَمَّا كَاْنَ ذٰلِكَ احْتَمَلُوْا أَنْ يُجْرُوْهُ مُجْرَى جَمْعِ الْمَوَاْتِ</مقطع>
  <رأس هوية="">
    <عنوان>الجمع</عنوان>
  </رأس>
  <مقطع هوية='٠٢٣١٧'>قَاْلُوْا <قول هوية='٢٨٢٢٠'>جَاْءَ جَوَاْرِيْكَ</قول>
  </مقطع>
  <مقطع هوية='٩٢٥٩٧'>وَ<قول هوية='٤٥٦٠١'>جَاْءَ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع هوية='٨٣٠٨٥'>وَ<قول هوية='٣٦٦٣٨'>جَاْءَ بَنَاْتُكَ</قول>
  </مقطع>
  <مقطع هوية='١٢٥٢٨'>وَقَاْلُوْا فِيْمَا لَمْ يُكَسَّرْ عَلَيْهِ الْوَاْحِدُ لِأَنَّهُ فِي مَعْنَى الْجَمْعِ كَمَا قَاْلُوْا فِي هٰذَا</مقطع>
  <مقطع هوية='٣٦٢٦٧'>كَمَا قَاْلَ اللَّهُ تَعَاْلَى جَدُّهُ <آية هوية='٠١٨٧٤'>وَمِنْهُمْ مَنْ يَسْتَمِعُوْنَ إِلَيْكَ</آية> إذ كَاْنَ فِي مَعْنَى الْجَمِيْعِ</مقطع>
  <مقطع هوية='٠١٨٥٤'>وَذٰلِكَ قَوْلُهُ تَعَاْلَى <آية هوية='٥١٨٢٥'>وَقَاْلَ نِسْوَةُ فِي الْمَدِيْنَةِ</آية>
  </مقطع>
  <مقطع هوية='٣٣١٣٦'>وَٱعْلَمْ أَنَّ مِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول هوية='٤٩٥٥٦'>ضَرْبُوْنِي قوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٩٤٠٨٧'>وَ<قول هوية='٥٥٥٤٧'>ضَرَبَاْنِي أَخَوَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٧٠١٨٧'>فَشَبَّهُوْا هٰذَا بِاْلتَّاْءِ الَّتِي يُظْهِرُوْنَهَا فِي <قول هوية='٢١٧٠١'>قَاْلَتْ فُلَاْنَةٌ</قول>
  </مقطع>
  <مقطع هوية='٣٩٢٦٤'>وَكَأَنَّهُمْ أَرَاْدُوْا أَنْ يَجْعَلُوْا لِلْجَمْعِ عَلَاْمَةً كَمَا جَعَلُوْا لِلْمُؤَنَّثِ</مقطع>
  <مقطع هوية='٣٦٩١٦'>وَهِيَ قَلِيْلَةٌ</مقطع>
  <مقطع هوية='٤١٧٧٧'>قَاْلَ الشَّاْعِرُ وَهُوَ الْفَرَزْدَقُ</مقطع>
  <شاهدة هوية='٠١٧٩٢'>
    <بيت>
      <مصراع>وَلٰكِنْ دِيَاْفِيٌّ أَبُوْهُ وَأُمُّهُ</مصراع>
      <مصراع>بِحَوْرَاْنَ يَعْصِرْنَ السَّلِيْطَ أَقاْرِبُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٤٢٩'>وَأَمَّا قَوْلُهُ جَلَّ ثَنَاْؤُهُ <آية هوية='٣٩٠٩١'>وَأَسَرُّوْا النَّجْوَى الَّذِيْنَ ظَلَمُوْا</آية>
  </مقطع>
  <مقطع هوية='٦٤٩٠٤'>فَإِنَّمَا يَجِيْءُ عَلَى الْبَدَلِ</مقطع>
  <مقطع هوية='٦٧٧٩٥'>وَكَأَنَّهُ قَاْلَ <قول هوية='٧٧٢٩٧'>انْطَلَقُوْا</قول> فَقِيْلَ لَهُ <قول هوية='٤٨٠٤٣'>مَنْ</قول> فَقَاْلَ <قول هوية='٤٠٢٠٤'>بَنُو فُلَاْنٍ</قول>
  </مقطع>
  <مقطع هوية='٦٨٤٩٦'>فَقَوْلُهُ جَلَّ وَعَزَّ <آية هوية='٢٦٨٨١'>وَأَسَرُّوْا النَّجْوَى الَّذِيْنَ ظَلَمُوْا</آية> عَلَى هٰذَا فِيْمَا زَعَمَ يُوْنُسُ</مقطع>
  <مقطع هوية='٠٥٤١٩'>وَقَاْلَ الْخَلِيْلُ رَحِمَهُ اللهُ تَعَاْلَى فَعَلَى هٰذَا الْمِثَاْلِ تَجْرِي هٰذِهِ الصِّفَاْتُ</مقطع>
  <مقطع هوية='٦٠٤٩٢'>وَكَذٰلِكَ <حرف>شاْبٌّ</حرف> وَ<حرف>شَيْخٌ</حرف> وَ<حرف>كَهْلٌ</حرف> إِذَا أَرَدْتَ شَاْبَّيْنَ وَشَيْخَيْن وَكَهْلَيْنِ</مقطع>
  <مقطع هوية='٦٥٠٥٧'>تَقُوْل مَرَرْتُ بِرَجُلٍ كهَلْ أصحاْبه وَمَرَرْتُ بِرَجُلٍ شاْب أَبَوَاْهُ</مقطع>
  <مقطع هوية='٨٠٠٤٨'>قَاْلَ الْخَلِيْلُ رَحِمَهُ اللهُ فَإِنْ ثَنَّيْتَ أَوْ جَمَعْتَ فَإِنَّ الْأَحْسَنُ أَنْ تَقُوْلَ <قول هوية='٤١٨٠٠'>مَرَرْتُ بِرَجُلٍ قُرَشِيَاْنِ أَبَوَاْهُ</قول> وَ<قول هوية='٣٣٩٣٦'>مَرَرْتُ بِرَجُلٍ كَهْلُوْنَ أَصْحَاْبُهُ</قول>
  </مقطع>
  <مقطع هوية='٤٣٤٨٣'>تَجْعَلُهُ ٱسْمًا بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٠٦٩٦٦'>مَرَرْتُ بِرَجُلٍ خَزٌّ صُفَّتُهُ</قول>
  </مقطع>
  <مقطع هوية='٩٠٩٠٤'>وَقَاْلَ الْخَلِيْلُ رَحِمَهُ اللهُ مَنْ قَاْلَ <قول هوية='٣٨٨٧٠'>أَكَلُوْنِي الْبَرَاْغِيْثُ</قول> أَجْرَى هٰذَا عَلَى أَوَّلِهِ</مقطع>
  <مقطع هوية='٢٤٨٠٨'>فَقَاْلَ <قول هوية='٤٢٢٦٠'>مَرَرْتُ بِرَجُلٍ حَسَنَيْنِ أَبَوَاْهُ</قول> وَ<قول هوية='٤٩٤٥٣'>مَرَرْتُ بِقَوْمٍ قُرَشِيِيْنِ آبَاْؤُهُمْ</قول>
  </مقطع>
  <مقطع هوية='٥٩٤٠١'>وَكَذٰلِكَ <حرف>أَفْعَلُ</حرف> نَحْوَ <حرف>أَعْوَرَ</حرف> وَ<حرف>أَحْمَرَ</حرف>
  </مقطع>
  <مقطع هوية='٤٦٠٤١'>تَقُوْلُ <قول هوية='١٩٨٨٠'>مَرَرْتُ بِرَجُلٍ أَعْوَرَ أَبَوَاْهُ</قول> وَ<حرف>أَحْمَرَ أَبَوَاْهُ</حرف>
  </مقطع>
  <مقطع هوية='٢٩٣٨٥'>فَإِنْ ثَنَّيْتَ قُلْتَ <قول هوية='٢٧٩٩٦'>مَرَرْتُ بِرَجُلٍ أَحْمَرَاْنِ أَبَوَاْهُ</قول> تَجْعَلُهُ ٱسْمًا</مقطع>
  <مقطع هوية='٣٦٣٨٢'>وَمَنْ قَاْلَ <قول هوية='٣٨٠٤٧'>أَكَلُوْنِي الْبَرَاْغِيْثُ</قول>
  </مقطع>
  <مقطع هوية='٧٦٣٨٤'>قُلْتَ عَلَى حَدِّ قَوْلِهِ <قول هوية='٠٠٤٠٩'>مَرَرْتُ بِرَجُلٍ أَعْوَرَيْنِ أَبَوَاْهُ</قول>
  </مقطع>
  <مقطع هوية='٣٧١٤٤'>وَتَقُوْلُ <قول هوية='٦١٠٦٢'>مَرَرْتُ بِرَجُلٍ أَعْوَرَ آباْؤُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٩٣٩٦'>كَأَنَّكَ تَكَلَّمْتَ بِهِ عَلَى حَدِّ <حرف>أَعْوَرِيْنِ</حرف>
  </مقطع>
  <مقطع هوية='٠٩٠١٠'>وَإِنْ لَمْ يُتَكَلَّمْ بِهِ</مقطع>
  <مقطع هوية='٢٦٢٣٣'>كَمَا تَوَهَّمُوْا فِي <حرف>هَلْكَى</حرف> وَ<حرف>مَوْتَى</حرف> وَ<حرف>مَرْضَى</حرف> أَنَّهُ فُعِلَ بِهِمْ</مقطع>
  <مقطع هوية='٤٨٩٦٤'>فَجَاْءُوْا بِهِ عَلَى مِثَاْلِ <حرف>جَرْحَى</حرف> وَ<حرف>قَتْلَى</حرف>
  </مقطع>
  <مقطع هوية='٧٤٦٨٥'>وَلَا يُقَاْلُ <حرف>هُلِكَ</حرف> وَلَا <حرف>مُرِضَ</حرف> وَلَا <حرف>مُوِتَ</حرف>
  </مقطع>
  <مقطع هوية='٧١٩٨٠'>قَاْلَ الشَّاْعِرُ وَهُوَ النَّاْبِغَةُ الْجَعدى</مقطع>
  <شاهدة هوية='٨٢٤٨٥'>
    <بيت>
      <مصراع>وَلَا يَشعُرُ الرُّمْحُ الْأَصَمُّ كُعُوْبُهُ</مصراع>
      <مصراع>بِثَرْوَةِ رَهْطِ الْأَعْيَطِ الْمُتَظَلِّمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٩٥٧٦'>وَأَحْسَن مِنْ هٰذَا <قول هوية='٤٧٣٩٧'>أَعُوْرٌ قَوْمُكَ</قول>
  </مقطع>
  <مقطع هوية='٤٨٢٢٣'>وَ<قول هوية='٠١٥٨٠'>مَرَرْتُ بِرَجُلٍ صُمٌّ قَوْمُهُ</قول>
  </مقطع>
  <مقطع هوية='٠٦٠٠٢'>وَتَقُوْلُ <قول هوية='٧٧٩٧٣'>مَرَرْتُ بِرَجُلٍ حِسَاْنٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٢٩٦٧'>وَلَيْسَ يَجْرِي هٰذَا مَجْرَى الْفِعْلِ</مقطع>
  <مقطع هوية='٢٠٨٨٠'>إِنَّمَا يَجْرِي مَجْرَى الْفِعْلِ مَا دَخَلَهُ الْأَلِفُ وَالنُّوْنُ وَالْوَاْوُ وَالنُّوْنُ فِي التَّثْنِيَّةِ وَالجَمْعِ</مقطع>
  <مقطع هوية='٠٣٠٠٥'>وَلَمْ يُغَيِّرْهُ</مقطع>
  <مقطع هوية='٥٣١٤٤'>نَحْوُ قَوْلِكَ <حرف>حَسَنٌ</حرف> وَ<حرف>حَسَنَاْنِ</حرف> فَاْلتَّثْنِيَّةُ لَمْ تُغَيِّرْ بِنَاْءَهُ</مقطع>
  <مقطع هوية='٦٨٠٣٠'>وَتَقُوْلُ <حرف>حَسَنُوْنَ</حرف> فَاْلْوَاْوُ وَالنُّوْنُ لَمْ تُغَيِّرْ الْوَاْحِدَ</مقطع>
  <مقطع هوية='٠٠٠٥٩'>فَصَاْرَ [ هٰذَا ] بِمَنْزِلَةِ <حرف>قَاْلَا</حرف> وَ<حرف>قَاْلُوْا</حرف>
  </مقطع>
  <مقطع هوية='٢٦٠١٤'>لِأَنَّ الْأَلِفَ وَالْوَاْوَ لَمْ تُغَيِّرْ <حرف>فَعَلَ</حرف>
  </مقطع>
  <مقطع هوية='٩٧٥٠٣'>وَأَمَّا <حرف>حِسَاْنٌ</حرف> وَ<حرف>عُوْرٌ</حرف> فَإِنَّهُ ٱسْمٌ كُسِّرَ عَلَيْهِ الْوَاْحِدُ</مقطع>
  <مقطع هوية='١٤٣٢٠'>فَجَاْءَ مَبْنِيًّا عَلَى مِثَاْلٍ كَبِنَاْءِ الْوَاْحِدِ</مقطع>
  <مقطع هوية='٦٧٩١٣'>وَخَرَجَ مِنْ بِنَاْءِ الْوَاْحِدِأِلَى بِنَاْءٍ آخَرَ لَا تَلْحَقُهُ فِي آخِرِهِ زِيَاْدَةٌ كِاْلزِّيَاْدَةِ الَّتِي [ لَحِقَتْ ] فِي <حرف>قُرَشِيٍّ</حرف> فِي الِاْثْنَيْنِ وَالْجَمِيْعِ</مقطع>
  <مقطع هوية='٠٨١٥١'>فَهٰذَا الْجَمِيْعُ لَهُ بِنَاْءٌ بُنِيَ عَلَيْهِ كَمَا بُنِيَ الْوَاْحِدُ عَلَى مِثَاْلِهِ فَأَجْرَى مَجْرَى الْوَاْحِدِ</مقطع>
  <مقطع هوية='٤٣٥٠٦'>وَمِمَّا يَدُلُّكَ عَلَى أَنَّ هٰذَا الْجَمِيْعَ لَيْسَ كَاْلْفِعْلِ أَنَّهُ لَيْسَ شَيْءٌ مِنَ الْفِعْلِ إِذَا كَاْنَ لِلجَمِيْعِ يَجِيْءُ مَبْنِيًّا عَلَى غَيْرِ بِنَاْئِهِ إِذَا كَاْنَ لِلوَاْحِدِ</مقطع>
  <مقطع هوية='٩٨٠٦٣'>فَمِنْ ثُمَّ صَاْرَ <حرف>حِسَاْنٌ</حرف> وَمَا أَشْبَهَهُ بِمَنْزِلَةِ الِٱسْمِ الْوَاْحِدِ</مقطع>
  <مقطع هوية='٨٤٦٦٥'>نَحْوُ <قول هوية='٣٩٩٢٩'>مَرَرْتُ بِرَجُلٍ جُنُبٍ أَصْحَاْبُهُ</قول>
  </مقطع>
  <مقطع هوية='٨٣٦٩٧'>وَ<قول هوية='١٩١٩٤'>مَرَرْتُ بِرَجُلٍ صَرُوْرَةٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع هوية='٨٣٢٣٤'>فَاْللَّفْظُ وَاحِدٌ وَالْمَعْنَى جَمِيْعٌ</مقطع>
  <مقطع هوية='٣٢٩٥٣'>وَٱعْلَمْ أَنْ مَا كَاْنَ يُجْمَعُ بِغَيْرِ الْوَاْوِ وَالنُّوْنِ نَحْوَ <حرف>حَسَنٍ</حرف> وَ<حرف>حِسَاْنٍ</حرف> فَإِنَّ الْأَجْوَدَ فِيْهِ أَنْ تَقُوْلَ <قول هوية='٩٤٢٠٩'>مَرَرْتُ بِرَجُلٍ حِسَاْنٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع هوية='٨٠٧٩١'>وَمَا كَاْنَ يُجْمَعُ بِاْلْوَاْوِ وَالنُّوْنِ نَحْوُ <حرف>مُنْطَلِقٍ</حرف> وَ<حرف>مُنْطَلِقِيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٠٧٥٠٢'>فَإِنَّ الْأَجْوَدَ فِيْهِ أَنْ يُجْعَلَ بِمَنْزِلَةِ الْفِعْلِ الْمُتَقَدِّمِ فَتَقُوْلُ <قول هوية='٠٨٠٦٨'>مَرَرْتُ بِرَجُلٍ مُنْطَلِقٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع هوية='٤١٦٩٦'>وَٱعْلَمْ أَنَّهُ مَنْ قَاْلَ <قول هوية='٦٥٠٢٥'>ذَهَبَ نِسَاْؤُكَ</قول> قَاْلَ <قول هوية='٣٠٤٥٩'>أَذَاْهِبٌ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع هوية='٤٢٣٢٣'>وَمَنْ قَاْلَ <آية هوية='٤٦٢٦٦'>فَمَنْ جَاْءَهُ مَوْعِظَةٌ مِنْ رَبِّهِ</آية> قَاْلَ <حرف>أَجَاْئِيَّ مَوْعِظَةٌ</حرف> تذَهَب الْهَاْءُ هٰاْهُنَا كَمَا تَذْهَبُ [ التَّاْءُ ] فِي الْفِعْلِ</مقطع>
  <مقطع هوية='٤٢٤٠٨'>وَكَاْنَ أَبُو عَمْرٍو يَقْرَأُ <آية هوية='٠٥٢١٤'>خَاْشِعًا أَبْصَاْرُهُمْ</آية>
  </مقطع>
  <مقطع هوية='٠٦٢٤٠'>قَاْلَ الشَّاْعِرُ وَهُوَ أَبُو ذُؤَيْب الْهُذَلِي</مقطع>
  <شاهدة هوية='٤٩٧٩٦'>
    <بيت>
      <مصراع>بَعِيْدُ الْغَزَاْةِ فَمَا إِنْ يَزَاْ</مصراع>
      <مصراع>لُ مُضْطَمَرًا طُرَّتاْه طَليْحا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦١٣٨٨'>وَقَاْلَ الْفَرَزْدَقُ</مقطع>
  <شاهدة هوية='١٢٤٢٧'>
    <بيت>
      <مصراع>وَكُنَّا وَرِثْنَاْهُ عَلَى عَهْدٍ تُبَّعٍ</مصراع>
      <مصراع>طَوِيْلًا سَوَاْرِيْهِ شَدِيْدًا دَعِاْئِمُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٧٨٧٠'>وَقَاْلَ الْفَرَزْدَقُ أَيْضًا</مقطع>
  <شاهدة هوية='٩٧٨٧٩'>
    <بيت>
      <مصراع>قَرَنْبَى يَحُكُّ قَفَا مُقْرِفٍ</مصراع>
      <مصراع>لَئِيْمٍ مَآثِرُهُ قُعْدُدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٧٥٨٨'>وَقَاْلَ آخَرُ وَهُوَ أَبُو زُبَيْدٍ الطَّاْئِي</مقطع>
  <شاهدة هوية='٠٠٠٢٠'>
    <بيت>
      <مصراع>مُسْتَحِنٌّ بِهَا الرِّيْاْحُ فَمَا يَجْـ</مصراع>
      <مصراع>ـتَاْبُها فِي الظَّلَاْمِ كُلُّ هَجُوْدٍ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٨٩٥٥'>وَقَاْلَ آخَرُ مِنْ بَنِي أَسَدٍ</مقطع>
  <شاهدة هوية='٥٥٥٠٥'>
    <بيت>
      <مصراع>فَلَاْقَى ٱبْنَ أُنْثَى يَبْتَغِي مِثْلَ مَا ٱبْتَغَى</مصراع>
      <مصراع>مِنَ الْقَوْمِ مَسْقِىَّ السَّمَاْمِ حَدَاْئِدُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٢٢٠٩'>وَقَاْلَ آخَرُ [ الْكُمَيْتُ بْنُ مَعْرُوْفٍ ]</مقطع>
  <شاهدة هوية='٢٣٠٤٥'>
    <بيت>
      <مصراع>وَمَا زِلْت مَحْمُوْلًا عَلَيَّ ضَغِيْنَةٌ</مصراع>
      <مصراع>وَمُضْطَلِعَ الْأَضْغَاْنِ مُذْ أَنَا يَاْفِعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١١٥١٦'>وَهٰذَا فِي الشِّعْرِ أَكْثَرُ مِنْ أَنْ أَحْصِيَهُ [ لَكَ ]</مقطع>
  <مقطع هوية='٥٥١٠٧'>وَمَنْ قَاْلَ <قول هوية='٢٨٢٤٤'>ذَهَبَ فُلَاْنَةُ</قول>
  </مقطع>
  <مقطع هوية='٤٦٠٢١'>قَاْلَ <قول هوية='٦٩٠١٦'>أَذَاْهِبٌ فُلَاْنَةُ</قول>
  </مقطع>
  <مقطع هوية='٧٧٧٨٥'>وَ<قول هوية='١٣٠٠٠'>أَحَاْضِرٌ الْقَاْضِيَ ٱمْرَأَةٌ</قول>
  </مقطع>
  <مقطع هوية='٦٦١٧٧'>وَقَدْ يَجُوْزُ فِي الشِّعْرِ <حرف>مَوْعِظَةٌ جَاْءَنَا</حرف>
  </مقطع>
  <مقطع هوية='٨١٩٣٥'>كَأَنَّهُ ٱكْتَفَى بِذِكْرِ الْمَوْعِظَةِ عَنْ التَّاْءِ</مقطع>
  <مقطع هوية='٣٤٩٣٠'>وَقَاْلَ الشَّاْعِرُ [ وَهُوَ ] الْأَعْشَى</مقطع>
  <شاهدة هوية='٦١٩٢٢'>
    <بيت>
      <مصراع>فَإِمَّا تَرَى لِمَّتِي بُدِّلَتْ</مصراع>
      <مصراع>فَإِنَّ الْحَوَاْدِثَ أَوْدَى بِهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٨١١٠'>وَقَاْلَ الآخَرُ وَهُوَ عَاْمِرُ بْن جُوَيْنِ الطَّاْئِيّ</مقطع>
  <شاهدة هوية='٣٧٧٥٧'>
    <بيت>
      <مصراع>فَلَا مُزْنَةٌ وَدَقَتْ وَدْقَهَا</مصراع>
      <مصراع>وَلَا أَرْضَ أَبْقَلَ إبْقَاْلَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٧٤٩١'>وَقَاْلَ الآخَرُ وَهُوَ طُفَيْلٌ الْغَنَوِيُّ</مقطع>
  <شاهدة هوية='٥٩١٨٤'>
    <بيت>
      <مصراع>إذْ هِى أَحْوَى مِنَ الرِّبْعِيِّ حَاْجِبُهُ</مصراع>
      <مصراع>وَاْلْعَيْنُ بِاْلإِثْمِدِ الْحَاْرِيِّ مَكْحُوْلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٦٠٤٧'>وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللهُ أَنَّ <آية هوية='٥٧٦٢٨'>السَّمَاْءُ مُنْفَطِرٌ بِهِ</آية> كَقَوْلِكَ <حرف>مُعَضِّلٌ</حرف> لِلْقَطَاْةِ</مقطع>
  <مقطع هوية='٤٠٤٠٥'>وَكَقَوْلِكَ <حرف>مُرْضِعٌ</حرف> لِلَّتِي بِهَا الرِّضَاْعُ</مقطع>
  <مقطع هوية='٠٨٧٢٧'>وَأَمَّا الـ<حرف>مُنْفَطِرَةُ</حرف> فِيَجِيْءُ عَلَى الْعَمَلِ</مقطع>
  <مقطع هوية='٣٦٩٠٦'>كَقَوْلِكَ <حرف>مُنْشَقَّةٌ</حرف> وَكَقَوْلِكَ <حرف>مُرْضِعَةٌ</حرف> لِلَّتِي تُرْضِعُ</مقطع>
  <مقطع هوية='٠٣١٩٥'>وَأَمَّا <آية هوية='٤٧١٩١'>كُلٌ فِي فَلَكٍ يَسْبَحُوْنَ</آية>
  </مقطع>
  <مقطع هوية='٠٣٧٢٢'>وَ <آية هوية='٩٥٥٥٤'>رَأَيْتُهُمْ لِي سَاْجِدِيْنَ</آية>
  </مقطع>
  <مقطع هوية='٠٨٣١٧'>وَ <آية هوية='٧٠١٠١'>يَا أَيُّهَا النَّمْلُ ٱدْخُلُوْا مَسَاْكِنَكُمْ</آية>
  </مقطع>
  <مقطع هوية='١٣٤٧٨'>فَزَعَمَ أَنَّهُ بِمَنْزِلَةِ مَا يَعْقِلُ وَيَسْمَعُ لَمَّا ذَكَرَهُمْ بِاْلسُّجُوْدِ وَصَاْرَ النَّمْلُ بِتِلْكَ الْمَنْزِلَةِ حِيْنَ حَدَّثْتَ عَنْهُ كَمَا تُحَدِّثُ عَنْ الْأَنَاْسِيّ</مقطع>
  <مقطع هوية='٨٧٧٧٨'>وَكَذٰلِكَ <آية هوية='٠٨٩٦٥'>فِي فَلَكٍ يَسْبَحُوْنَ</آية>
  </مقطع>
  <مقطع هوية='٩٠٥٣٨'>لِأَنَّهَا جُعِلَتْ فِي طَاْعَتِهَا وَفِي أَنَّهُ لَا يَنْبَغِي لِأَحَدٍ لِأَنْ يَقُوْلَ <قول هوية='٧٨٥٥٧'>مُطِرْنَا بِنَوْءِ كَذَا</قول>
  </مقطع>
  <مقطع هوية='٩٢١٧٦'>وَلَا يَنْبَغِي لِأَحَدٍ أَنْ يَعْبُدَ شَيْئًا مِنْهَا بِمَنْزِلَةِ مَنْ يَعْقِلُ مِنَ الْمَخْلُوْقِيْنَ وَيُبْصِرُ الْأُمُوْرَ</مقطع>
  <مقطع هوية='٥٥٨٨٦'>قَاْلَ النَّاْبِغَةُ الْجَعدي</مقطع>
  <شاهدة هوية='٩٣٢٠٠'>
    <بيت>
      <مصراع>شَرِبتُ بِهَا وَالدِّيْكُ يَدعو صَباْحَهُ</مصراع>
      <مصراع>إِذَا مَا بَنُو نَعْشٍ دَنَوْا فَتَصَوَّبُوْا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٤٣٩١'>فَجَاْزَ هٰذَا حَيْثُ صَاْرَتْ هٰذِهِ الْأَشْيَاْءُ عِنْدَهُمْ تُؤْمَرُ وَتُطِيْعُ وَتَفْهَمُ الْكَلَاْمَ وَتَعْبُدُ بِمَنْزِلَةِ الآدَمِيِيْنَ</مقطع>
  <مقطع هوية='١١١٢١'>وَسَأَلْتُ الْخَلِيْلَ رَحِمَهُ اللهُ عَنْ <قول هوية='٧٧٥٩١'>مَا أَحْسَنَ وُجُوْهَهُمَا</قول>
  </مقطع>
  <مقطع هوية='٨٣٣٧٨'>فَقَاْلَ لِأَنَّ الِٱثْنَيْنِ جَمِيْعٌ وَهٰذَا بِمَنْزِلَةِ قَوْلِ الِاْثْنَيْنِ <قول هوية='٧٢٣٥٤'>نَحْنُ فَعَلْنَا ذَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٤١٢٧٣'>وَلٰكِنَّهُمْ أَرَاْدُوْا أَنْ يَفْرِقُوْا بَيْنَ مَا يَكُوْنُ مُنْفَرِدًا وَبَيْنَ مَا يَكُوْنُ شَيْئًا مِنْ شَيْءٍ</مقطع>
  <مقطع هوية='٨٧٨٢٢'>وَقَدْ جَعَلُوْا الْمُفْرَدَيْنِ أَيْضًا جَمِيْعًا</مقطع>
  <مقطع هوية='٦٨٩٤٢'>قَاْلَ اللَّهُ ثَنَاْؤُهُ <آية هوية='٧٨٩٥٨'>وَهَلْ أَتَاْكَ نَبَأُ الْخَصْمِ إِذْ تَسَوَّرُوْا الْمِحْرَاْبَ إِذْ دَخَلُوْا عَلَى دَاْوُدَ فَفَزِعَ مِنْهُمْ قَاْلُوْا لَا تَخَفْ خَصْمَاْنِ بَغَى بَعْضُنَا عَلَى بَعْضٍ</آية>
  </مقطع>
  <مقطع هوية='٨٢٢٧٢'>وَقَدْ يُثَنُّوْنَ مَا يَكُوْنُ بَعْضًا لِشَيْءٍ</مقطع>
  <مقطع هوية='٥٠٠٩٢'>زَعَمَ يُوْنُسُ أَنْ رُؤْبَةَ كَاْنَ يَقُوْلُ <قول هوية='٧٢٩٧٠'>مَا أَحْسَنَ رَأْسَيْهِمَا</قول>
  </مقطع>
  <مقطع هوية='٩٣٠٣٣'>قَاْلَ الرَّاْجِزُ وَهُوَ خِطَاْمٌ</مقطع>
  <شاهدة هوية='٤١٦٢٦'>
    <بيت>
      <مصراع>ظَهْرَاْهُمَا مِثْلُ ظُهُوْرِ التُّرْسَيْنْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣١٠٧٤'>وَقَاْلُوْا <قول هوية='٢٠١٠٢'>وَضَعَا رِحَاْلَهُمَا</قول>
  </مقطع>
  <مقطع هوية='١٨٧٦٣'>يُرِيْد <حرف>رِحْلَي رَاْحِلَتَيْنِ</حرف>
  </مقطع>
  <مقطع هوية='٠٠٩٠٧'>وَ حَدُّ الْكَلَاْمِ أَنْ يَقُوْلَ <قول هوية='٠٢١١٩'>وَضَعْتُ رِحْلَيْ الرَّاْحِلَتَيْنِ</قول>
  </مقطع>
