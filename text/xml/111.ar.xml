<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٣٤"
     درنبورج="١-٢٠١"
     البكاء="٢-١٠٢"
     هارون="٢-٣٦"
     يعقوب="٢-٣٢"
     رقم="١١١">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا جَرَى مِنَ الْأَسْمَاْءِ الَّتِي مِنَ الْأَفْعَاْلِ وَمَا أَشْبَهَهَا مِنَ الصِّفَاْتِ الَّتِي لَيْسَتْ بعَمَلٍ</مقطع>
    <مقطع رقم="٢">نَحْوُ الْـ<حرف>حَسَنِ</حرف> وَالْـ<حرف>كَرِيْمِ</حرف> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع رقم="٣">مَجْرَى الْفِعْلِ إِذَا أَظْهَرْتَ بَعْدَهُ الْأَسْمَاْءَ أَوْ أَضْمَرْتَهَا</مقطع>
  </عنوان>
  <مقطع رقم="٤">وَذٰلِكَ قَوْلُكَ <قول رقم="١">مَرَرْتُ بِرَجُلٍ حَسَنٍ أَبَوَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول رقم="٢">أَحَسَنٌ أَبَوَاْهُ</قول>
  </مقطع>
  <مقطع رقم="٦">وَ<قول رقم="٣">أَخَاْرِجٌ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٧">فَصَاْرَ هٰذَا بِمَنْزِلَةِ <قول رقم="٤">قَاْلَ أَبَوَاْكَ</قول> وَ<قول رقم="٥">قَاْلَ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٨">عَلَى حَدِّ مَنْ قَاْلَ <قول رقم="٦">قَوْمُكَ حَسَنُوْنَ</قول> إِذَا أَخَّرُوْا</مقطع>
  <مقطع رقم="٩">فِيَصِيْرُ [ هٰذَا ] بِمَنْزِلَةِ <قول رقم="٧">أَذَاْهِبٌ أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٨">أَمُنْطَلِقٌ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="١١">فَإِنْ بَدَأْتَ بِاْلِٱسْمِ قَبْلَ الصِّفَةِ</مقطع>
  <مقطع رقم="١٢">قُلْتَ <قول رقم="٩">قَوْمُكَ مُنْطَلِقُوْنَ</قول>
  </مقطع>
  <مقطع رقم="١٣">وَ<قول رقم="١٠">قَوْمُكَ حَسَنُوْنَ</قول>
  </مقطع>
  <مقطع رقم="١٤">كَمَا تَقُوْلُ <قول رقم="١١">أَبَوَاْكَ قَاْلَا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٥">وَ<قول رقم="١٢">قَوْمُكَ قَاْلُوْا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٦">فَإِنْ بَدَأْتَ بِنَعْتٍ مُؤَنَّثٍ فَهُوَ يَجْرِي مَجْرَى الْمُذَكَّرِ إِلَّا أَنَّكَ تُدْخِلُ الْهَاْءَ</مقطع>
  <مقطع رقم="١٧">وَذٰلِكَ قَوْلُكَ <قول رقم="١٣">أَذَاْهِبَةٌ جَاْرِيَتُكَ <!--هارون جَاْرِيَتَاْكَ --></قول>
  </مقطع>
  <مقطع رقم="١٨">وَ<قول رقم="١٤">أَكَرِيْمَةٌ نِسَاْؤُكُمْ</قول>
  </مقطع>
  <مقطع رقم="١٩">فَصَاْرَتْ الْهَاْءُ فِي الْأَسْمَاْءِ</مقطع>
  <مقطع رقم="٢٠">بِمَنْزِلَةِ التَّاْءِ فِي الْفِعْلِ إِذَا قُلْتَ <قول رقم="١٥">قَاْلَتْ نِسَاْؤُكُمْ</قول>
  </مقطع>
  <مقطع رقم="٢١">وَ<قول رقم="١٦">ذَهَبَتْ جَاْرِيَتُكَ <!--البكاء جَاْرِيَتَاْكَ --></قول>
  </مقطع>
  <مقطع رقم="٢٢">وَإِنَّمَا قُلْتَ <قول رقم="١٧">أَكَرِيْمَةٌ نِسَاْؤُكُمْ</قول>
  </مقطع>
  <مقطع رقم="٢٣">عَلَى قَوْلِ مَنْ قَاْلَ <قول رقم="١٨">أَنِسَاْؤُكُمْ كَرِيْمَاْتٌ</قول>
  </مقطع>
  <مقطع رقم="٢٤">إِذَا أَخَّرَ الصِّفَةَ</مقطع>
  <مقطع رقم="٢٥">وَالْأَلِفُ وَالتَّاْءُ</مقطع>
  <مقطع رقم="٢٦">وَالْوَاْوُ [ وَالْيَاْءُ ] وَالنُّوْنُ فِي الْجَمِيْعِ</مقطع>
  <مقطع رقم="٢٧">وَالْأَلِفُ وَالنُّوْنُ فِي التَّثْنِيَّةِ</مقطع>
  <مقطع رقم="٢٨">بِمَنْزِلَةِ الْوَاْوِ وَالْأَلِفِ فِي <حرف>قَاْلَا</حرف> وَ<حرف>قَاْلُوْا</حرف>
  </مقطع>
  <مقطع رقم="٢٩">وَبِمَنْزِلَةِ الْوَاْوِ وَالنُّوْنِ فِي <حرف>يَقُوْلُوْنَ</حرف>
  </مقطع>
  <مقطع رقم="٣٠">وَكَذٰلِكَ <قول رقم="١٩">أَقُرَشِيٌّ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٣١">وَ<قول رقم="٢٠">أَقُرَشِيٌّ أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٣٢">إِذَا أَرَدْتَ الصِّفَةَ جَرَى مَجْرَى <حرف>حَسَنٍ</حرف> وَ<حرف>كَرِيْمٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٣">وَإِنَّمَا قَاْلَتْ الْعَرَبُ <قول رقم="٢١">قَاْلَ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَ<قول رقم="٢٢">قَاْلَ أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٣٥">لِأَنَّهُمْ اكْتَفَوْا بِمَا أَظْهَرُوْا</مقطع>
  <مقطع رقم="٣٦">عَنْ أَنْ يَقُوْلُوْا <قول رقم="٢٣">قَاْلَا أَبَوَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٣٧">وَ<قول رقم="٢٤">قَاْلُوْا قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٣٨">فَحَذَفُوْا ذٰلِكَ اكْتِفَاْءً بِمَا أَظْهَرُوْا</مقطع>
  <مقطع رقم="٣٩">قَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة مقطع="٤٠" رقم="١">
    <بيت>
      <مصراع>أَلَيْسَ أَكْرَمَ خَلْقِ اللّٰهِ قَدْ عَلِمُوا</مصراع>
      <مصراع>عِنْدَ الْحِفَاْظِ بَنُو عَمْرِو بْنِ حُنْجُوْدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤١">صَاْرَ <حرف>لَيْسَ</حرف> هٰهُنَا بِمَنْزِلَةِ <قول رقم="٢٥">ضَرَبَ قَوْمَكَ بَنُو فُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٤٢">لِأَنَّ <حرف>لَيْسَ</حرف> فِعْلٌ</مقطع>
  <مقطع رقم="٤٣">فَإِذَا بَدَأْتَ بِالِٱسْمِ قُلْتَ <قول رقم="٢٦">قَوْمُكَ قَاْلُوْا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٤٤">وَ<قول رقم="٢٧">أَبَوَاْكَ قَدْ ذَهَبَا</قول>
  </مقطع>
  <مقطع رقم="٤٥">لِأَنَّهُ قَدْ وَقَعَ هٰهُنَا إِضْمَاْرٌ فِي الْفِعْلِ وَهُوَ أَسْمَاْؤُهُمْ</مقطع>
  <مقطع رقم="٤٦">فَلَا بُدَّ لِلْمُضْمَرِ أَنْ يَجِيْءَ بِمَنْزِلَةِ الْمُظْهَرِ</مقطع>
  <مقطع رقم="٤٧">وَحِيْنَ قُلْتَ <قول رقم="٢٨">ذَهَبَ قَوْمُكَ</قول> لَمْ يَكُنْ فِي <حرف>ذَهَبَ</حرف> إِضْمَاْرٌ</مقطع>
  <مقطع رقم="٤٨">وَكَذٰلِكَ <قول رقم="٢٩">قَاْلَتْ جَاْرِيَتَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٤٩">وَ<قول رقم="٣٠">جَاْءَتْ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع رقم="٥٠">إِلَّا أَنَّهُمْ أَدْخَلُوْا التَّاْءَ لِيَفْصِلُوْا بَيْنَ التَّأْنِيْث وَالتَّذْكِيْر</مقطع>
  <مقطع رقم="٥١">وَحَذَفُوْا الْأَلِفَ وَالنُّوْنَ لَمَّا بَدَءُوْا بِالْفِعْلِ فِي تَثْنِيَةِ الْمُؤَنَّثِ وَجَمْعِهِ</مقطع>
  <مقطع رقم="٥٢">كَمَا حَذَفُوْا ذٰلِكَ فِي التَّذْكِيْرِ</مقطع>
  <مقطع رقم="٥٣">فَإِنْ بَدَأْتَ بِالِٱسْمِ قُلْتَ <قول رقم="٣١">نِسَاْؤُكَ قُلْنَ ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٥٤">كَمَا قُلْتَ <قول رقم="٣٢">قَوْمُكَ قَاْلُوْا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٥٥">وَتَقُوْلُ <قول رقم="٣٣">جَاْرِيَتَاْكَ قَاْلَتَا</قول>
  </مقطع>
  <مقطع رقم="٥٦">كَمَا تَقُوْلُ <قول رقم="٣٤">أَبَوَاْكَ قَاْلَا</قول>
  </مقطع>
  <مقطع رقم="٥٧">لِأَنَّ فِي <حرف>قُلْنَ</حرف> وَ<حرف>قَاْلَتَا</حرف> إِضْمَاْرًا</مقطع>
  <مقطع رقم="٥٨">كَمَا كَاْنَ فِي <حرف>قَاْلَا</حرف> وَ<حرف>قَاْلُوْا</حرف>
  </مقطع>
  <مقطع رقم="٥٩">وَإِذَا قُلْتَ <قول رقم="٣٥">ذَهَبَتْ جَاْرِيَتَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٦٠">أَوْ <قول رقم="٣٦">جَاْءَتْ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع رقم="٦١">فَلَيْسَ فِي الْفِعْلِ إِضْمَاْرٌ</مقطع>
  <مقطع رقم="٦٢">فَفَصَلُوْا بَيْنَهُمَا فِي التَّأْنِيْثِ وَالتَّذْكِيْرِ</مقطع>
  <مقطع رقم="٦٣">وَلَمْ يَفْصِلُوْا بَيْنَهُمَا فِي التَّثْنِيَّةِ وَالْجَمْعِ</مقطع>
  <مقطع رقم="٦٤">وَإِنَّمَا جَاْءُوْا بِالتَّاْءِ لِلتَّأْنِيْثِ لِأَنَّهَا لَيْسَتْ عَلَاْمَةَ إِضْمَاْرٍ كَالْوَاْوِ وَالْأَلِفِ</مقطع>
  <مقطع رقم="٦٥">وَإِنَّمَا هِيَ كَهَاْءِ التَّأْنِيْثِ فِي <حرف>طَلْحَةٍ</حرف> وَلَيْسَتْ بِٱسْمٍ</مقطع>
  <مقطع رقم="٦٦">وَقَاْلَ بَعْضُ الْعَرَبِ <قول رقم="٣٧">قَاْلَ فُلَاْنَةُ</قول>
  </مقطع>
  <مقطع رقم="٦٧">وَكُلَّمَا طَاْلَ الْكَلَاْمُ فَهُوَ أَحْسَنُ</مقطع>
  <مقطع رقم="٦٨">نَحْوُ قَوْلِكَ <قول رقم="٣٨">حَضَرَ الْقَاْضِيَ ٱمْرَأَةٌ</قول>
  </مقطع>
  <مقطع رقم="٦٩">لِأَنَّهُ إِذَا طَاْلَ الْكَلَاْمُ كَاْنَ الْحَذْفُ أَجْمَلَ</مقطع>
  <مقطع رقم="٧٠">وَكَأَنَّهُ شَيْءٌ يَصِيْرُ بَدَلًا مِنْ شَيْءٍ كَالْمُعَاْقَبَةِ</مقطع>
  <مقطع رقم="٧١">نَحْوُ قَوْلِكَ <حرف>زَنَاْدِقَةٌ</حرف> وَ<حرف>زَنَاْدِيْقُ</حرف>
  </مقطع>
  <مقطع رقم="٧٢">فَتَحْذَفُ الْيَاْءَ لِمَكَاْنِ الْهَاْءِ</مقطع>
  <مقطع رقم="٧٣">وَكَمَا قَاْلُوْا فِي <حرف>مُغْتَلِمٍ</حرف>
  <حرف>مُغَيْلِمٍ</حرف> وَ<حرف>مُغَيْلِيْمٍ</حرف>
  </مقطع>
  <مقطع رقم="٧٤">وَكَأَنَّ الْيَاْءُ صَاْرَتْ بَدَلًا مِمَّا حَذَفُوْا</مقطع>
  <مقطع رقم="٧٥">وَإِنَّمَا حَذَفُوْا التَّاْءَ لِأَنَّهُم صَاْرَ عِنْدَهُم إِظْهَاْرُ الْمُؤَنَّثِ يَكْفِيْهِمْ عَنْ ذِكْرِهِمْ التَّاْءِ</مقطع>
  <مقطع رقم="٧٦">كَمَا كَفَاْهُمْ الْجَمِيْعُ وَالْإِثْنَاْنِ حِيْنَ أَظْهَرُوْهُمْ عَنْ الْوَاْوِ وَالْأَلِفِ</مقطع>
  <رأس هو="٠">
    <عنوان>الحَيَوَانُ والمَوَاتُ</عنوان>
  </رأس>
  <مقطع رقم="٧٧">وَهٰذَا فِي الْوَاْحِدِ مِنَ الْحَيَوَاْنِ قَلِيْلٌ</مقطع>
  <مقطع رقم="٧٨">و[ هُوَ ] فِي الْمَوَاْتِ كَثِيْرٌ</مقطع>
  <مقطع رقم="٧٩">فَرَقُوْا بَيْنَ الْمَوَاْتِ وَالْحَيَوَاْنِ كَمَا فَرَقُوْا بَيْنَ الْآدَمِيِيْنَ وَغَيْرِهِمْ</مقطع>
  <مقطع رقم="٨٠">تَقُوْلُ <قول رقم="٣٩">هُمْ ذَاْهِبُوْنَ</قول>
  </مقطع>
  <مقطع رقم="٨١">وَ<قول رقم="٤٠">هُمْ فِي الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٨٢">وَلَا تَقُوْلُ <قول رقم="٤١">جَمَاْلُكَ ذَاْهِبُوْنَ</قول>
  </مقطع>
  <مقطع رقم="٨٣">وَلَا تَقُوْلُ <قول رقم="٤٢">هُمْ فِي الدَّاْرِ</قول> وَأَنْتَ تَعْنِي الْجَمَاْلَ</مقطع>
  <مقطع رقم="٨٤">وَلٰكِنَّكَ تَقُوْلُ <حرف>هِيَ</حرف> وَ<حرف>هُنَّ</حرف>
  <حرف>ذَاْهِبَةٌ</حرف> وَ<حرف>ذَاْهِبَاْتٌ</حرف>
  </مقطع>
  <مقطع رقم="٨٥">وَمِمَّا جَاْءَ فِي الْقُرآنِ مِنَ الْمَوَاْتِ قَدْ حُذِفَتْ فِيْهِ التَّاْءُ</مقطع>
  <مقطع رقم="٨٦">قَوْلُهُ عَزَّ وَجَلَّ <آية سورة="٢" آية="٢٧٥">فَمَنْ جَاْءَهُ مَوْعِظَةٌ مِّن رَّبِّهِ فَانْتَهَىٰ</آية>
  </مقطع>
  <مقطع رقم="٨٧">وَقَوْلُهُ <آية سورة="٣" آية="١٠٥">مِنۢ بَعْدِ مَا جَآءَهُمُ ٱلْبَيِّنَـٰتُ</آية>
  </مقطع>
  <مقطع رقم="٨٨">وَهٰذَا النَّحْوُ كَثِيْرٌ فِي الْقُرآنِ</مقطع>
  <مقطع رقم="٨٩">وَهُوَ فِي [ الْوَاْحِدَةِ إِذَا كَاْنَتْ مِنَ ] الْآدَمِيِيْنَ أَقَلُّ مِنْهُ فِي سَاْئِرِ الْحَيَوَاْنِ</مقطع>
  <مقطع رقم="٩٠">أَلَا تَرَى أَنَّ لَهُمْ فِي الْجَمِيْعِ حَاْلًا لَيْسَتْ لِغَيْرِهِم</مقطع>
  <مقطع رقم="٩١">لِأَنَّهُم الْأَوَّلُوْنَ وَأَنَّهُمْ قَدْ فُضِّلُوْا بِمَا لَمْ يُفَضَّلْ بِهِ غَيْرُهُم مِنَ الْعَقْلِ وَالْعِلْمِ</مقطع>
  <مقطع رقم="٩٢">وَأَمَّا الْجَمِيْعُ مِنَ الْحَيَوَاْنِ الَّذِي يُكَسَّرُ عَلَيْهِ الْوَاْحِدُ</مقطع>
  <مقطع رقم="٩٣">فَبِمَنْزِلَةِ الْجَمِيْعِ مِنْ غَيْرِهِ الَّذِي يُكَسَّرُ عَلَيْهِ الْوَاْحِدُ [فِي أَنَّهُ مُؤَنَّثٌ]</مقطع>
  <مقطع رقم="٩٤">أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول رقم="٤٣">هُوَ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="٩٥">وَتَقُوْلُ <قول رقم="٤٤">هِيَ الرِّجَاْلُ</قول> فَيَجُوْزُ لَكَ</مقطع>
  <مقطع رقم="٩٦">وَتَقُوْلُ <قول رقم="٤٥">هُوَ جَمَلٌ</قول>
  </مقطع>
  <مقطع رقم="٩٧">وَ<قول رقم="٤٦">هِيَ الْجِمَاْلُ</قول>
  </مقطع>
  <مقطع رقم="٩٨">وَ<قول رقم="٤٧">هُوَ عَيْرٌ</قول>
  </مقطع>
  <مقطع رقم="٩٩">وَ<قول رقم="٤٨">هِيَ الْأَعْيَاْرُ</قول>
  </مقطع>
  <مقطع رقم="١٠٠">فَجَرَتْ هٰذِهِ كُلُّهَا مَجْرَى <قول رقم="٤٩">هِيَ الْجُذُوْعُ</قول>
  </مقطع>
  <مقطع رقم="١٠١">وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
  <مقطع رقم="١٠٢">يَجْرِي هٰذَا الْمَجْرَى لِأَنَّ الْجَمِيْعَ يُؤَنَّثُ وَإِنْ كَاْنَ كُلُّ وَاْحِدٍ مِنْهُ مُذَكَّرًا</مقطع>
  <مقطع رقم="١٠٣">مِنَ الْحَيَوَاْنِ</مقطع>
  <مقطع رقم="١٠٤">فَلَمَّا كَاْنَ كَذٰلِكَ صَيَّرُوْهُ بِمَنْزِلَةِ الْمَوَاْتِ</مقطع>
  <مقطع رقم="١٠٥">لِأَنَّهُ قَدْخَرَجَ مِنَ الْأَوَّلِ الْأَمْكَنِ حَيْثُ أَرَدْتَ الْجَمِيْعَ</مقطع>
  <مقطع رقم="١٠٦">فَلَمَّا كَاْنَ ذٰلِكَ احْتَمَلُوْا أَنْ يُجْرُوْهُ مُجْرَى جَمْعِ الْمَوَاْتِ</مقطع>
  <رأس هو="٠">
    <عنوان>الجمع</عنوان>
  </رأس>
  <مقطع رقم="١٠٧">قَاْلُوْا <قول رقم="٥٠">جَاْءَ جَوَاْرِيْكَ</قول>
  </مقطع>
  <مقطع رقم="١٠٨">وَ<قول رقم="٥١">جَاْءَ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع رقم="١٠٩">وَ<قول رقم="٥٢">جَاْءَ بَنَاْتُكَ</قول>
  </مقطع>
  <مقطع رقم="١١٠">وَقَاْلُوْا فِيْمَا لَمْ يُكَسَّرْ عَلَيْهِ الْوَاْحِدُ لِأَنَّهُ فِي مَعْنَى الْجَمْعِ كَمَا قَاْلُوْا فِي هٰذَا</مقطع>
  <مقطع رقم="١١١">كَمَا قَاْلَ اللَّهُ تَعَاْلَى جَدُّهُ <آية>وَمِنْهُمْ مَنْ يَسْتَمِعُوْنَ إِلَيْكَ</آية> إذ كَاْنَ فِي مَعْنَى الْجَمِيْعِ</مقطع>
  <مقطع رقم="١١٢">وَذٰلِكَ قَوْلُهُ تَعَاْلَى <آية>وَقَاْلَ نِسْوَةُ فِي الْمَدِيْنَةِ</آية>
  </مقطع>
  <مقطع رقم="١١٣">وَٱعْلَمْ أَنَّ مِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول رقم="٥٣">ضَرْبُوْنِي قوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="١١٤">وَ<قول رقم="٥٤">ضَرَبَاْنِي أَخَوَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١١٥">فَشَبَّهُوْا هٰذَا بِالتَّاْءِ الَّتِي يُظْهِرُوْنَهَا فِي <قول رقم="٥٥">قَاْلَتْ فُلَاْنَةٌ</قول>
  </مقطع>
  <مقطع رقم="١١٦">وَكَأَنَّهُمْ أَرَاْدُوْا أَنْ يَجْعَلُوْا لِلْجَمْعِ عَلَاْمَةً كَمَا جَعَلُوْا لِلْمُؤَنَّثِ</مقطع>
  <مقطع رقم="١١٧">وَهِيَ قَلِيْلَةٌ</مقطع>
  <مقطع رقم="١١٨">قَاْلَ الشَّاْعِرُ وَهُوَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="١١٩" رقم="٢">
    <بيت>
      <مصراع>وَلٰكِنْ دِيَاْفِيٌّ أَبُوْهُ وَأُمُّهُ</مصراع>
      <مصراع>بِحَوْرَاْنَ يَعْصِرْنَ السَّلِيْطَ أَقاْرِبُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٢٠">وَأَمَّا قَوْلُهُ جَلَّ ثَنَاْؤُهُ <آية>وَأَسَرُّوْا النَّجْوَى الَّذِيْنَ ظَلَمُوْا</آية>
  </مقطع>
  <مقطع رقم="١٢١">فَإِنَّمَا يَجِيْءُ عَلَى الْبَدَلِ</مقطع>
  <مقطع رقم="١٢٢">وَكَأَنَّهُ قَاْلَ <قول رقم="٥٦">انْطَلَقُوْا</قول> فَقِيْلَ لَهُ <قول رقم="٥٧">مَنْ</قول> فَقَاْلَ <قول رقم="٥٨">بَنُو فُلَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="١٢٣">فَقَوْلُهُ جَلَّ وَعَزَّ <آية>وَأَسَرُّوْا النَّجْوَى الَّذِيْنَ ظَلَمُوْا</آية> عَلَى هٰذَا فِيْمَا زَعَمَ يُوْنُسُ</مقطع>
  <مقطع رقم="١٢٤">وَقَاْلَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ تَعَاْلَى فَعَلَى هٰذَا الْمِثَاْلِ تَجْرِي هٰذِهِ الصِّفَاْتُ</مقطع>
  <مقطع رقم="١٢٥">وَكَذٰلِكَ <حرف>شاْبٌّ</حرف> وَ<حرف>شَيْخٌ</حرف> وَ<حرف>كَهْلٌ</حرف> إِذَا أَرَدْتَ شَاْبَّيْنَ وَشَيْخَيْن وَكَهْلَيْنِ</مقطع>
  <مقطع رقم="١٢٦">تَقُوْل مَرَرْتُ بِرَجُلٍ كهَلْ أصحاْبه وَمَرَرْتُ بِرَجُلٍ شاْب أَبَوَاْهُ</مقطع>
  <مقطع رقم="١٢٧">قَاْلَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ فَإِنْ ثَنَّيْتَ أَوْ جَمَعْتَ فَإِنَّ الْأَحْسَنُ أَنْ تَقُوْلَ <قول رقم="٥٩">مَرَرْتُ بِرَجُلٍ قُرَشِيَاْنِ أَبَوَاْهُ</قول> وَ<قول رقم="٦٠">مَرَرْتُ بِرَجُلٍ كَهْلُوْنَ أَصْحَاْبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٢٨">تَجْعَلُهُ ٱسْمًا بِمَنْزِلَةِ قَوْلِكَ <قول رقم="٦١">مَرَرْتُ بِرَجُلٍ خَزٌّ صُفَّتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٢٩">وَقَاْلَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ مَنْ قَاْلَ <قول رقم="٦٢">أَكَلُوْنِي الْبَرَاْغِيْثُ</قول> أَجْرَى هٰذَا عَلَى أَوَّلِهِ</مقطع>
  <مقطع رقم="١٣٠">فَقَاْلَ <قول رقم="٦٣">مَرَرْتُ بِرَجُلٍ حَسَنَيْنِ أَبَوَاْهُ</قول> وَ<قول رقم="٦٤">مَرَرْتُ بِقَوْمٍ قُرَشِيِيْنِ آبَاْؤُهُمْ</قول>
  </مقطع>
  <مقطع رقم="١٣١">وَكَذٰلِكَ <حرف>أَفْعَلُ</حرف> نَحْوَ <حرف>أَعْوَرَ</حرف> وَ<حرف>أَحْمَرَ</حرف>
  </مقطع>
  <مقطع رقم="١٣٢">تَقُوْلُ <قول رقم="٦٥">مَرَرْتُ بِرَجُلٍ أَعْوَرَ أَبَوَاْهُ</قول> وَ<حرف>أَحْمَرَ أَبَوَاْهُ</حرف>
  </مقطع>
  <مقطع رقم="١٣٣">فَإِنْ ثَنَّيْتَ قُلْتَ <قول رقم="٦٦">مَرَرْتُ بِرَجُلٍ أَحْمَرَاْنِ أَبَوَاْهُ</قول> تَجْعَلُهُ ٱسْمًا</مقطع>
  <مقطع رقم="١٣٤">وَمَنْ قَاْلَ <قول رقم="٦٧">أَكَلُوْنِي الْبَرَاْغِيْثُ</قول>
  </مقطع>
  <مقطع رقم="١٣٥">قُلْتَ عَلَى حَدِّ قَوْلِهِ <قول رقم="٦٨">مَرَرْتُ بِرَجُلٍ أَعْوَرَيْنِ أَبَوَاْهُ</قول>
  </مقطع>
  <مقطع رقم="١٣٦">وَتَقُوْلُ <قول رقم="٦٩">مَرَرْتُ بِرَجُلٍ أَعْوَرَ آباْؤُهُ</قول>
  </مقطع>
  <مقطع رقم="١٣٧">كَأَنَّكَ تَكَلَّمْتَ بِهِ عَلَى حَدِّ <حرف>أَعْوَرِيْنِ</حرف>
  </مقطع>
  <مقطع رقم="١٣٨">وَإِنْ لَمْ يُتَكَلَّمْ بِهِ</مقطع>
  <مقطع رقم="١٣٩">كَمَا تَوَهَّمُوْا فِي <حرف>هَلْكَى</حرف> وَ<حرف>مَوْتَى</حرف> وَ<حرف>مَرْضَى</حرف> أَنَّهُ فُعِلَ بِهِمْ</مقطع>
  <مقطع رقم="١٤٠">فَجَاْءُوْا بِهِ عَلَى مِثَاْلِ <حرف>جَرْحَى</حرف> وَ<حرف>قَتْلَى</حرف>
  </مقطع>
  <مقطع رقم="١٤١">وَلَا يُقَاْلُ <حرف>هُلِكَ</حرف> وَلَا <حرف>مُرِضَ</حرف> وَلَا <حرف>مُوِتَ</حرف>
  </مقطع>
  <مقطع رقم="١٤٢">قَاْلَ الشَّاْعِرُ وَهُوَ النَّاْبِغَةُ الْجَعدى</مقطع>
  <شاهدة مقطع="١٤٣" رقم="٣">
    <بيت>
      <مصراع>وَلَا يَشعُرُ الرُّمْحُ الْأَصَمُّ كُعُوْبُهُ</مصراع>
      <مصراع>بِثَرْوَةِ رَهْطِ الْأَعْيَطِ الْمُتَظَلِّمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٤٤">وَأَحْسَن مِنْ هٰذَا <قول رقم="٧٠">أَعُوْرٌ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="١٤٥">وَ<قول رقم="٧١">مَرَرْتُ بِرَجُلٍ صُمٌّ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٦">وَتَقُوْلُ <قول رقم="٧٢">مَرَرْتُ بِرَجُلٍ حِسَاْنٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٧">وَلَيْسَ يَجْرِي هٰذَا مَجْرَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٤٨">إِنَّمَا يَجْرِي مَجْرَى الْفِعْلِ مَا دَخَلَهُ الْأَلِفُ وَالنُّوْنُ وَالْوَاْوُ وَالنُّوْنُ فِي التَّثْنِيَّةِ وَاْلجَمْعِ</مقطع>
  <مقطع رقم="١٤٩">وَلَمْ يُغَيِّرْهُ</مقطع>
  <مقطع رقم="١٥٠">نَحْوُ قَوْلِكَ <حرف>حَسَنٌ</حرف> وَ<حرف>حَسَنَاْنِ</حرف> فَالتَّثْنِيَّةُ لَمْ تُغَيِّرْ بِنَاْءَهُ</مقطع>
  <مقطع رقم="١٥١">وَتَقُوْلُ <حرف>حَسَنُوْنَ</حرف> فَالْوَاْوُ وَالنُّوْنُ لَمْ تُغَيِّرْ الْوَاْحِدَ</مقطع>
  <مقطع رقم="١٥٢">فَصَاْرَ [ هٰذَا ] بِمَنْزِلَةِ <حرف>قَاْلَا</حرف> وَ<حرف>قَاْلُوْا</حرف>
  </مقطع>
  <مقطع رقم="١٥٣">لِأَنَّ الْأَلِفَ وَالْوَاْوَ لَمْ تُغَيِّرْ <حرف>فَعَلَ</حرف>
  </مقطع>
  <مقطع رقم="١٥٤">وَأَمَّا <حرف>حِسَاْنٌ</حرف> وَ<حرف>عُوْرٌ</حرف> فَإِنَّهُ ٱسْمٌ كُسِّرَ عَلَيْهِ الْوَاْحِدُ</مقطع>
  <مقطع رقم="١٥٥">فَجَاْءَ مَبْنِيًّا عَلَى مِثَاْلٍ كَبِنَاْءِ الْوَاْحِدِ</مقطع>
  <مقطع رقم="١٥٦">وَخَرَجَ مِنْ بِنَاْءِ الْوَاْحِدِأِلَى بِنَاْءٍ آخَرَ لَا تَلْحَقُهُ فِي آخِرِهِ زِيَاْدَةٌ كِالزِّيَاْدَةِ الَّتِي [ لَحِقَتْ ] فِي <حرف>قُرَشِيٍّ</حرف> فِي الِاثْنَيْنِ وَالْجَمِيْعِ</مقطع>
  <مقطع رقم="١٥٧">فَهٰذَا الْجَمِيْعُ لَهُ بِنَاْءٌ بُنِيَ عَلَيْهِ كَمَا بُنِيَ الْوَاْحِدُ عَلَى مِثَاْلِهِ فَأَجْرَى مَجْرَى الْوَاْحِدِ</مقطع>
  <مقطع رقم="١٥٨">وَمِمَّا يَدُلُّكَ عَلَى أَنَّ هٰذَا الْجَمِيْعَ لَيْسَ كَالْفِعْلِ أَنَّهُ لَيْسَ شَيْءٌ مِنَ الْفِعْلِ إِذَا كَاْنَ لِلجَمِيْعِ يَجِيْءُ مَبْنِيًّا عَلَى غَيْرِ بِنَاْئِهِ إِذَا كَاْنَ لِلوَاْحِدِ</مقطع>
  <مقطع رقم="١٥٩">فَمِنْ ثُمَّ صَاْرَ <حرف>حِسَاْنٌ</حرف> وَمَا أَشْبَهَهُ بِمَنْزِلَةِ الِٱسْمِ الْوَاْحِدِ</مقطع>
  <مقطع رقم="١٦٠">نَحْوُ <قول رقم="٧٣">مَرَرْتُ بِرَجُلٍ جُنُبٍ أَصْحَاْبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٦١">وَ<قول رقم="٧٤">مَرَرْتُ بِرَجُلٍ صَرُوْرَةٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="١٦٢">فَاللَّفْظُ وَاْحِدٌ وَالْمَعْنَى جَمِيْعٌ</مقطع>
  <مقطع رقم="١٦٣">وَٱعْلَمْ أَنْ مَا كَاْنَ يُجْمَعُ بِغَيْرِ الْوَاْوِ وَالنُّوْنِ نَحْوَ <حرف>حَسَنٍ</حرف> وَ<حرف>حِسَاْنٍ</حرف> فَإِنَّ الْأَجْوَدَ فِيْهِ أَنْ تَقُوْلَ <قول رقم="٧٥">مَرَرْتُ بِرَجُلٍ حِسَاْنٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="١٦٤">وَمَا كَاْنَ يُجْمَعُ بِالْوَاْوِ وَالنُّوْنِ نَحْوُ <حرف>مُنْطَلِقٍ</حرف> وَ<حرف>مُنْطَلِقِيْنَ</حرف>
  </مقطع>
  <مقطع رقم="١٦٥">فَإِنَّ الْأَجْوَدَ فِيْهِ أَنْ يُجْعَلَ بِمَنْزِلَةِ الْفِعْلِ الْمُتَقَدِّمِ فَتَقُوْلُ <قول رقم="٧٦">مَرَرْتُ بِرَجُلٍ مُنْطَلِقٍ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="١٦٦">وَٱعْلَمْ أَنَّهُ مَنْ قَاْلَ <قول رقم="٧٧">ذَهَبَ نِسَاْؤُكَ</قول> قَاْلَ <قول رقم="٧٨">أَذَاْهِبٌ نِسَاْؤُكَ</قول>
  </مقطع>
  <مقطع رقم="١٦٧">وَمَنْ قَاْلَ <آية>فَمَنْ جَاْءَهُ مَوْعِظَةٌ مِنْ رَبِّهِ</آية> قَاْلَ <حرف>أَجَاْئِيَّ مَوْعِظَةٌ</حرف> تذَهَب الْهَاْءُ هٰاْهُنَا كَمَا تَذْهَبُ [ التَّاْءُ ] فِي الْفِعْلِ</مقطع>
  <مقطع رقم="١٦٨">وَكَاْنَ أَبُو عَمْرٍو يَقْرَأُ <آية>خَاْشِعًا أَبْصَاْرُهُمْ</آية>
  </مقطع>
  <مقطع رقم="١٦٩">قَاْلَ الشَّاْعِرُ وَهُوَ أَبُو ذُؤَيْب الْهُذَلِي</مقطع>
  <شاهدة مقطع="١٧٠" رقم="٤">
    <بيت>
      <مصراع>بَعِيْدُ الْغَزَاْةِ فَمَا إِنْ يَزَاْ</مصراع>
      <مصراع>لُ مُضْطَمَرًا طُرَّتاْه طَليحا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٧١">وَقَاْلَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="١٧٢" رقم="٥">
    <بيت>
      <مصراع>وَكُنَّا وَرِثْنَاْهُ عَلَى عَهْدٍ تُبَّعٍ</مصراع>
      <مصراع>طَوِيْلًا سَوَاْرِيْهِ شَدِيْدًا دَعِاْئِمُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٧٣">وَقَاْلَ الْفَرَزْدَقُ أَيْضًا</مقطع>
  <شاهدة مقطع="١٧٤" رقم="٦">
    <بيت>
      <مصراع>قَرَنْبَى يَحُكُّ قَفَا مُقْرِفٍ</مصراع>
      <مصراع>لَئِيْمٍ مَآثِرُهُ قُعْدُدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٧٥">وَقَاْلَ آخَرُ وَهُوَ أَبُو زُبَيْدٍ الطَّاْئِي</مقطع>
  <شاهدة مقطع="١٧٦" رقم="٧">
    <بيت>
      <مصراع>مُسْتَحِنٌّ بِهَا الرِّيْاْحُ فَمَا يَجْـ</مصراع>
      <مصراع>ـتَاْبُها فِي الظَّلَاْمِ كُلُّ هَجُوْدٍ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٧٧">وَقَاْلَ آخَرُ مِنْ بَنِي أَسَدٍ</مقطع>
  <شاهدة مقطع="١٧٨" رقم="٨">
    <بيت>
      <مصراع>فَلَاْقَى ٱبْنَ أُنْثَى يَبْتَغِي مِثْلَ مَا ٱبْتَغَى</مصراع>
      <مصراع>مِنَ الْقَوْمِ مَسْقِىَّ السَّمَاْمِ حَدَاْئِدُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٧٩">وَقَاْلَ آخَرُ [ الْكُمَيْتُ بْنُ مَعْرُوْفٍ ]</مقطع>
  <شاهدة مقطع="١٨٠" رقم="٩">
    <بيت>
      <مصراع>وَمَا زِلْت مَحْمُوْلًا عَلَيَّ ضَغِيْنَةٌ</مصراع>
      <مصراع>وَمُضْطَلِعَ الْأَضْغَاْنِ مُذْ أَنَا يَاْفِعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨١">وَهٰذَا فِي الشِّعْرِ أَكْثَرُ مِنْ أَنْ أَحْصِيَهُ [ لَكَ ]</مقطع>
  <مقطع رقم="١٨٢">وَمَنْ قَاْلَ <قول رقم="٧٩">ذَهَبَ فُلَاْنَةُ</قول>
  </مقطع>
  <مقطع رقم="١٨٣">قَاْلَ <قول رقم="٨٠">أَذَاْهِبٌ فُلَاْنَةُ</قول>
  </مقطع>
  <مقطع رقم="١٨٤">وَ<قول رقم="٨١">أَحَاْضِرٌ الْقَاْضِيَ ٱمْرَأَةٌ</قول>
  </مقطع>
  <مقطع رقم="١٨٥">وَقَدْ يَجُوْزُ فِي الشِّعْرِ <حرف>مَوْعِظَةٌ جَاْءَنَا</حرف>
  </مقطع>
  <مقطع رقم="١٨٦">كَأَنَّهُ ٱكْتَفَى بِذِكْرِ الْمَوْعِظَةِ عَنْ التَّاْءِ</مقطع>
  <مقطع رقم="١٨٧">وَقَاْلَ الشَّاْعِرُ [ وَهُوَ ] الْأَعْشَى</مقطع>
  <شاهدة مقطع="١٨٨" رقم="١٠">
    <بيت>
      <مصراع>فَإِمَّا تَرَى لِمَّتِي بُدِّلَتْ</مصراع>
      <مصراع>فَإِنَّ الْحَوَاْدِثَ أَوْدَى بِهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨٩">وَقَاْلَ الآخَرُ وَهُوَ عَاْمِرُ بْن جُوَيْنِ الطَّاْئِيّ</مقطع>
  <شاهدة مقطع="١٩٠" رقم="١١">
    <بيت>
      <مصراع>فَلَا مُزْنَةٌ وَدَقَتْ وَدْقَهَا</مصراع>
      <مصراع>وَلَا أَرْضَ أَبْقَلَ إبْقَاْلَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٩١">وَقَاْلَ الآخَرُ وَهُوَ طُفَيْلٌ الْغَنَوِيُّ</مقطع>
  <شاهدة مقطع="١٩٢" رقم="١٢">
    <بيت>
      <مصراع>إذْ هِى أَحْوَى مِنَ الرِّبْعِيِّ حَاْجِبُهُ</مصراع>
      <مصراع>وَالْعَيْنُ بِاْلإِثْمِدِ الْحَاْرِيِّ مَكْحُوْلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٩٣">وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّ <آية>السَّمَاْءُ مُنْفَطِرٌ بِهِ</آية> كَقَوْلِكَ <حرف>مُعَضِّلٌ</حرف> لِلْقَطَاْةِ</مقطع>
  <مقطع رقم="١٩٤">وَكَقَوْلِكَ <حرف>مُرْضِعٌ</حرف> لِلَّتِي بِهَا الرِّضَاْعُ</مقطع>
  <مقطع رقم="١٩٥">وَأَمَّا الـ<حرف>مُنْفَطِرَةُ</حرف> فِيَجِيْءُ عَلَى الْعَمَلِ</مقطع>
  <مقطع رقم="١٩٦">كَقَوْلِكَ <حرف>مُنْشَقَّةٌ</حرف> وَكَقَوْلِكَ <حرف>مُرْضِعَةٌ</حرف> لِلَّتِي تُرْضِعُ</مقطع>
  <مقطع رقم="١٩٧">وَأَمَّا <آية>كُلٌ فِي فَلَكٍ يَسْبَحُوْنَ</آية>
  </مقطع>
  <مقطع رقم="١٩٨">وَ <آية>رَأَيْتُهُمْ لِي سَاْجِدِيْنَ</آية>
  </مقطع>
  <مقطع رقم="١٩٩">وَ <آية>يَا أَيُّهَا النَّمْلُ ٱدْخُلُوْا مَسَاْكِنَكُمْ</آية>
  </مقطع>
  <مقطع رقم="٢٠٠">فَزَعَمَ أَنَّهُ بِمَنْزِلَةِ مَا يَعْقِلُ وَيَسْمَعُ لَمَّا ذَكَرَهُمْ بِاْلسُّجُوْدِ وَصَاْرَ النَّمْلُ بِتِلْكَ الْمَنْزِلَةِ حِيْنَ حَدَّثْتَ عَنْهُ كَمَا تُحَدِّثُ عَنْ الْأَنَاْسِيّ</مقطع>
  <مقطع رقم="٢٠١">وَكَذٰلِكَ <آية>فِي فَلَكٍ يَسْبَحُوْنَ</آية>
  </مقطع>
  <مقطع رقم="٢٠٢">لِأَنَّهَا جُعِلَتْ فِي طَاْعَتِهَا وَفِي أَنَّهُ لَا يَنْبَغِي لِأَحَدٍ لِأَنْ يَقُوْلَ <قول رقم="٨٢">مُطِرْنَا بِنَوْءِ كَذَا</قول>
  </مقطع>
  <مقطع رقم="٢٠٣">وَلَا يَنْبَغِي لِأَحَدٍ أَنْ يَعْبُدَ شَيْئًا مِنْهَا بِمَنْزِلَةِ مَنْ يَعْقِلُ مِنَ الْمَخْلُوْقِيْنَ وَيُبْصِرُ الْأُمُوْرَ</مقطع>
  <مقطع رقم="٢٠٤">قَاْلَ النَّاْبِغَةُ الْجَعدي</مقطع>
  <شاهدة مقطع="٢٠٥" رقم="١٣">
    <بيت>
      <مصراع>شَرِبتُ بِهَا وَالدِّيْكُ يَدعو صَباْحَهُ</مصراع>
      <مصراع>إِذَا مَا بَنُو نَعْشٍ دَنَوْا فَتَصَوَّبُوا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٠٦">فَجَاْزَ هٰذَا حَيْثُ صَاْرَتْ هٰذِهِ الْأَشْيَاْءُ عِنْدَهُمْ تُؤْمَرُ وَتُطِيْعُ وَتَفْهَمُ الْكَلَاْمَ وَتَعْبُدُ بِمَنْزِلَةِ الآدَمِيِيْنَ</مقطع>
  <مقطع رقم="٢٠٧">وَسَأَلْتُ الْخَلِيْلَ رَحِمَهُ اللّٰهُ عَنْ <قول رقم="٨٣">مَا أَحْسَنَ وُجُوْهَهُمَا</قول>
  </مقطع>
  <مقطع رقم="٢٠٨">فَقَاْلَ لِأَنَّ الِٱثْنَيْنِ جَمِيْعٌ وَهٰذَا بِمَنْزِلَةِ قَوْلِ الِاثْنَيْنِ <قول رقم="٨٤">نَحْنُ فَعَلْنَا ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٢٠٩">وَلٰكِنَّهُمْ أَرَاْدُوْا أَنْ يَفْرِقُوْا بَيْنَ مَا يَكُوْنُ مُنْفَرِدًا وَبَيْنَ مَا يَكُوْنُ شَيْئًا مِنْ شَيْءٍ</مقطع>
  <مقطع رقم="٢١٠">وَقَدْ جَعَلُوْا الْمُفْرَدَيْنِ أَيْضًا جَمِيْعًا</مقطع>
  <مقطع رقم="٢١١">قَاْلَ اللَّهُ ثَنَاْؤُهُ <آية>وَهَلْ أَتَاْكَ نَبَأُ الْخَصْمِ إِذْ تَسَوَّرُوْا الْمِحْرَاْبَ إِذْ دَخَلُوْا عَلَى دَاْوُدَ فَفَزِعَ مِنْهُمْ قَاْلُوْا لَا تَخَفْ خَصْمَاْنِ بَغَى بَعْضُنَا عَلَى بَعْضٍ</آية>
  </مقطع>
  <مقطع رقم="٢١٢">وَقَدْ يُثَنُّوْنَ مَا يَكُوْنُ بَعْضًا لِشَيْءٍ</مقطع>
  <مقطع رقم="٢١٣">زَعَمَ يُوْنُسُ أَنْ رُؤْبَةَ كَاْنَ يَقُوْلُ <قول رقم="٨٥">مَا أَحْسَنَ رَأْسَيْهِمَا</قول>
  </مقطع>
  <مقطع رقم="٢١٤">قَاْلَ الرَّاْجِزُ وَهُوَ خِطَاْمٌ</مقطع>
  <شاهدة مقطع="٢١٥" رقم="١٤">
    <بيت>
      <مصراع>ظَهْرَاْهُمَا مِثْلُ ظُهُوْرِ التُّرْسَيْنْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢١٦">وَقَاْلُوْا <قول رقم="٨٦">وَضَعَا رِحَاْلَهُمَا</قول>
  </مقطع>
  <مقطع رقم="٢١٧">يُرِيْد <حرف>رِحْلَي رَاْحِلَتَيْنِ</حرف>
  </مقطع>
