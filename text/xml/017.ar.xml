<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢١"
     درنبورج="١-١٦"
     البكاء="١-١٠٤"
     هارون="١-٤٥"
     يعقوب="١-٨٢"
     رقم="١٧">
  <عنوان>
    <مقطع هوية='٥٢١٠٨'>هٰذَا بَاْبُ الْفِعْلِ الَّذِي يَتَعَدَّى ٱسْمَ الْفَاْعِلِ إِلَى الْمَفْعُوْلِ</مقطع>
    <مقطع هوية='٥٠٣٨٤'>وَٱسْمُ الْفَاْعِلِ وَالْمَفْعُوْلِ فِيْهِ لِشَيْءٍ وَاْحِدٍ</مقطع>
  </عنوان>
  <!-- كَاْنَ وَأَخُوتهَا -->
  <مقطع هوية='١٧٩٩٦'>فَمِنْ ثَمَّ ذُكِرَ عَلَى حِدَتِهِ</مقطع>
  <مقطع هوية='٥٥٦٠٩'>وَلَمْ يُذْكَرْ مَعَ الْأَوَّلِ</مقطع>
  <مقطع هوية='٥٢٤٨١'>وَلَا يَجُوْزُ فِيْهِ الِاقْتِصَاْرُ عَلَى الْفَاْعِلِ</مقطع>
  <مقطع هوية='١٠٧٦٦'>كَمَا لَمْ يَجُزْ فِي <حرف>ظَنَنْتُ</حرف> الِاقْتِصَاْرُ عَلَى الْمَفْعُوْلِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٨١٥٥٩'>لِأَنَّ حَالَكَ فِي الِاحْتِيَاْجِ إِلَى الْآخِرِ هٰهُنَا</مقطع>
  <مقطع هوية='١٠٩٠٨'>كَحَالِكَ فِي الِاحْتِيَاْجِ إِلَيْهِ ثَمَّةَ</مقطع>
  <مقطع هوية='٩٨٦٩٧'>وَسَنُبَيِّنُ لَكَ إِنْ شَاْءَ اللهُ</مقطع>
  <مقطع هوية='٠١٧٨٣'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٦٩٧٧٣'>
    <حرف>كَاْنَ</حرف> وَ<حرف>يَكُوْنُ</حرف> وَ<حرف>صَاْرَ</حرف> وَ<حرف>مَا دَاْمَ</حرف> وَ<حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع هوية='١٦٢٣٣'>وَمَا كَاْنَ نَحْوَهُنَّ مِنَ الْفِعْلِ</مقطع>
  <مقطع هوية='٦٣٢٨٠'>مِمَّا لَا يَسْتَغْنِي عَنْ الْخَبَرِ</مقطع>
  <مقطع هوية='٢٧٠٤١'>تَقُوْلُ <قول هوية='٩٧٢٥٣'>كَاْنَ عَبْدُ اللهِ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٤٥٧٢٤'>فَإِنَّمَا أَرَدْتَ أَنْ تُخْبِرَ عَنْ الْأُخُوَّةِ</مقطع>
  <مقطع هوية='٠٣٨٦٦'>وَأَدْخَلْتَ <حرف>كَانَ</حرف> لِتَجْعَلَ ذٰلِكَ فِيْمَا مَضَى</مقطع>
  <مقطع هوية='٠٧٥٣٠'>وَذَكَرْتَ الْأَوَّلَ</مقطع>
  <مقطع هوية='٣٥٢٠٨'>كَمَا ذَكَرْتَ الْمَفْعُوْلَ الْأَوَّلَ مِنْ <حرف>ظَنَنْتُ</حرف>
  </مقطع>
  <مقطع هوية='٦٢٥١٥'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='٨١١٨٦'>كَانَ أَخَاكَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٤١٢٤٨'>فَقَدَّمْتَ وَأَخَّرْتَ كَمَا فَعَلْتَ ذٰلِكَ فِي <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع هوية='٨٢٩٨٥'>لِأَنَّهُ فِعْلٌ مِثْلُهُ</مقطع>
  <مقطع هوية='٩٧٢٩٦'>وَحَاْلُ التَّقْدِيْمِ وَالتَّأْخِيْرِ فِيْهِ كَحَاْلِهِ فِي <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٤٦٠'>إِلَّا أَنَّ ٱسْمَ الْفَاْعِلِ وَالْمَفْعُوْلِ فِيْهِ لِشَيْءٍ وَاْحِدٍ</مقطع>
  <مقطع هوية='٥٤١٦٦'>وَتَقُوْلُ <قول هوية='٤٥٧٦٦'>كُنَّاْهُمْ</قول>
  </مقطع>
  <مقطع هوية='٣٨٥٤٣'>كَمَا تَقُوْلُ <قول هوية='٠٣١٤٤'>ضَرَبْنَاْهُمْ</قول>
  </مقطع>
  <مقطع هوية='٣٥٢٠٣'>وَتَقُوْلُ <قول هوية='٢٩٧٥٩'>إِذَا لَمْ نَكُنْهُمْ فَمَنْ ذَا يَكُوْنُهُمْ</قول>
  </مقطع>
  <مقطع هوية='٧٩٥٢١'>كَمَا تَقُوْلُ <قول هوية='١١٦٥١'>إِذَا لَمْ نَضْرِبْهُمْ فَمَنْ يَضْرِبُهُمْ</قول>
  </مقطع>
  <مقطع هوية='٧٣١٤٤'>قَالَ أَبُوْ الْأَسْوَدِ الْدُّؤَلِىِّ</مقطع>
  <شاهدة هوية='٤٠٥٣٧'>
    <بيت>
      <مصراع>فَإِنْ لَا يَكُنْهَا أَوْ تَكُنْهُ فَإِنَّهُ</مصراع>
      <مصراع>أَخُوْهَا غَذَتْهُ أُمُّهُ بِلَبَانِهِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٠٩٣٤'>فَهُوَ <حرف>كَاْئِنٌ</حرف> وَ<حرف>مَكُوْنٌ</حرف>
  </مقطع>
  <مقطع هوية='٩١٩٢٤'>كَمَا تَقُوْلُ <حرف>ضَاْرِبٌ</حرف> وَ<حرف>مَضْرُوبٌ</حرف>
  </مقطع>
  <مقطع هوية='٢٩٤٥٠'>وَقَدْ يَكُوْنُ لِـ<حرف>كَاْنَ</حرف> مَوْضِعٌ آخَرُ</مقطع>
  <مقطع هوية='٤٤٣٤٢'>يَقْتَصِرُ عَلَى الْفَاْعِلِ فِيْهِ</مقطع>
  <مقطع هوية='٥٤٨٤٥'>تَقُوْلُ <قول هوية='٥٥٦٤٦'>قَدْ كَاْنَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٩٨٤٦٣'>أَيْ <قول هوية='٧٤٩٣٩'>قَدْ خُلِقَ عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٨٣٣١٢'>وَ<قول هوية='٨٨٣٤٦'>قَدْ كَاْنَ الْأَمْرُ</قول>
  </مقطع>
  <مقطع هوية='٣٨٤٠٦'>أَيْ <قول هوية='٨٢٣٨٩'>وَقَعَ الْأَمْرُ</قول>
  </مقطع>
  <مقطع هوية='٢٩١٢٣'>وَ<قول هوية='٩٠٣٩٤'>قَدْ دَاْمَ فُلَاْنٌ</قول>
  </مقطع>
  <مقطع هوية='٣٠٦٢٨'>أَيْ <قول هوية='٢٦٤٦٠'>ثَبَتَ</قول>
  </مقطع>
  <مقطع هوية='٥٨٩٨٠'>كَمَا تَقُوْلُ <قول هوية='٤٢٧٩٣'>رَأَيْتُ زَيْدًا</قول> تُرِيْدُ رُؤْيَةَ الْعَيْنِ</مقطع>
  <مقطع هوية='٠٥٢٨٩'>وَكَمَا تَقُوْلُ <قول هوية='٢٤٥٣٦'>أَنَا وَجَدْتُهُ</قول> تُرِيْدُ وِجْدَاْنَ الضَّالَّةِ</مقطع>
  <مقطع هوية='٤٩١٠٥'>وَكَمَا يَكُوْنُ <حرف>أَصْبَحَ</حرف> وَ<حرف>أَمْسَى</حرف>
  </مقطع>
  <مقطع هوية='٠٩٠٠٠'>مَرَّةً بِمَنْزِلَةِ <حرف>كَاْنَ</حرف>
  </مقطع>
  <مقطع هوية='٨٦٢٦٤'>وَمَرَّةً بِمَنْزِلَةِ قَوْلِكَ <حرف>اسْتَيْقَظُوْا</حرف> وَ<حرف>نَاْمُوْا</حرف>
  </مقطع>
  <مقطع هوية='٩٢٤٦٧'>فَأَمَّا <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع هوية='٢٨٨٠٥'>فَإَّنهُ لَا يَكُوْنُ فِيْهَا ذٰلِكَ</مقطع>
  <مقطع هوية='٤٩٠٤٩'>لِأَنَّهَا وُضِعَتْ مَوْضِعًا وَاْحِدًا</مقطع>
  <مقطع هوية='٥٥٢١٥'>وَمِنْ ثَمَّ لَمْ تَصَرَّفْ تَصَرُّفَ الْفِعْلِ الْآخَرِ</مقطع>
  <مقطع هوية='٣٢٧٠١'>فَمِمَّا جَاْءَ عَلَى <حرف>وَقَعَ</حرف>
  </مقطع>
  <مقطع هوية='٤٦٠٣٦'>قَوْلُهُ وَهُوَ مَقَّاْسٌ الْعَاْئِذِيّ</مقطع>
  <شاهدة هوية='٠٧٨٤٦'>
    <بيت>
      <مصراع>فِدًى لِبَنِي ذُهْلِ بْنِ شَيْبَاْنَ نَاْقَتِي</مصراع>
      <مصراع>إِذَا كَاْنَ يَوْمٌ ذُو كَوَاْكِبَ أَشْهَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٨٨٦١'>أَيْ <حرف>إِذَا وَقَعَ</حرف>
  </مقطع>
  <مقطع هوية='٧١٢٨٣'>وَقَالَ الْآخَرُ عَمْرٌو بْنُ شَأْسٍ</مقطع>
  <شاهدة هوية='٥٤٩٦٨'>
    <بيت>
      <مصراع>بَنِي أَسَدٍ هَلْ تَعْلَمُوْنَ بَلَاْءَنًا</مصراع>
      <مصراع>إِذَا كَاْنَ يَوْمًا ذَا كَوَاْكِبَ أَشْنَعًا</مصراع>
    </بيت>
    <بيت>
      <مصراع>إِذَا كَاْنَتْ الْحُوُّ الطِّوَاْلُ كَأَنَّمًا</مصراع>
      <مصراع>كَسَاْهَا السِّلَاْحُ الْأُرْجُوَاْنَ الْمُضَلَّعًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٩٩٤٩'>أَضْمَرَ لِعِلْمِ الْمُخَاْطَبِ بِمَا يَعْنِي وَهُوَ <حرف>الْيَوْمُ</حرف>
  </مقطع>
  <مقطع هوية='٢٥٢٦٩'>وَسَمِعْتُ بَعْضَ الْعَرَبِ يَقُوْلُ <حرف>أَشْنَعًا</حرف> وَيَرْفَعُ مَا قَبْلَهُ</مقطع>
  <مقطع هوية='٧٢٦٦١'>كَأَنَّهُ قَالَ <قول هوية='٢٥٧٩٩'>إِذَا وَقَعَ يَوْمٌ ذُو كَوَاْكِبَ أَشْنَعًا</قول>
  </مقطع>
  <مقطع هوية='٧٦٤٣٤'>وَاعْلَمْ أَنَّهُ إِذَا وَقَعَ فِي هٰذَا الْبَاْبِ نَكِرَةٌ وَمَعْرِفَةٌ</مقطع>
  <مقطع هوية='٠١٤٤٨'>فَالَّذِي تَشْغَلُ بِهِ كَاْنَ الْمَعْرِفَةُ</مقطع>
  <مقطع هوية='٥٣٣٠٠'>لِأَنَّهُ حَدُّ الْكَلَامِ</مقطع>
  <مقطع هوية='١٥٣٩٣'>لِأَنَّهُمَا شَيءٌ وَاْحِدٌ</مقطع>
  <مقطع هوية='٤١٢١٣'>وَلَيْسَ بِمَنْزِلَةِ قَوْلِكَ <قول هوية='٧٤٩٥٨'>ضَرَبَ رَجُلٌ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٨١٣١٧'>لِأَنَّهُمَا شَيْئَاْنِ مُخْتَلِفَاْنِ</مقطع>
  <مقطع هوية='٢٧٧٤٨'>وَهُمَا فِي <حرف>كَاْنَ</حرف> بِمَنْزِلَتِهِمَا فَيِ الِابْتِدَاْءِ إِذَا قُلْتَ</مقطع>
  <مقطع هوية='٤٠١٤٥'>
    <قول هوية='٥٠٨٩٦'>عَبْدُ اللهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='١٩٦٩١'>تَبْتَدِئُ بِالْأَعْرَفِ ثُمَّ تَذْكُرُ الْخَبَرَ</مقطع>
  <مقطع هوية='٠٣٨٥٩'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٥٣٥٣٤'>
    <قول هوية='١٢٣٧٢'>كَانَ زَيْدٌ حَلِيْمًا</قول>
  </مقطع>
  <مقطع هوية='٩٥٢٥٣'>وَ<قول هوية='٨٢٠٧٣'>كَانَ حَلِيْمًا زِيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٩٥٩٤٢'>لَا عَلَيْكَ أَقَدَّمْتَ أَمْ أَخَّرْتَ</مقطع>
  <مقطع هوية='٦١٠٣٠'>إِلَا أَنَّهُ عَلَى مَا وَصَفْتُ لَكَ</مقطع>
  <مقطع هوية='٨٣٦١٢'>فِي قَوْلِكَ <قول هوية='٦٠٧٩٠'>ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
  </مقطع>
  <مقطع هوية='٣٥١١٨'>فَإِذَا قُلْتَ <قول هوية='٣٢٤٧١'>كَانَ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٠١٤١٥'>فَقَدْ ابْتَدَأْتَ بِمَا هُوَ مَعْرُوْفٌ عِنْدَهُ مِثْلُهُ عِنْدَكَ</مقطع>
  <مقطع هوية='٢٣٤٨٨'>فَإِنَّمَا يَنْتَظِرُ الْخَبَرَ</مقطع>
  <مقطع هوية='٩٤١٥٤'>فَإِذَا قُلْتَ <حرف>حَلِيْمًا</حرف> فَقَدْ أَعْلَمْتَهُ مِثْلَ مَا عَلِمْتَ</مقطع>
  <مقطع هوية='٣٠٠١٢'>فَإِذَا قُلْتَ <قول هوية='٢٣٩٨٣'>كَاْنَ حَلِيْمًا</قول>
  </مقطع>
  <مقطع هوية='٤١٢٣٠'>فَإِنَّمَا يَنتَظِرُ أَنْ تُعَرِّفَهُ صَاْحِبَ الصِّفَةِ</مقطع>
  <مقطع هوية='٨٠٥٩٩'>فَهُوَ مَبْدُوْءٌ فِي الْفِعْلِ</مقطع>
  <مقطع هوية='٠٣٠١٦'>وَإِنْ كَاْنَ مُؤَخَّرًا فِي اللَّفْظِ</مقطع>
  <مقطع هوية='٦٤٨٠٦'>فَإِنْ قُلْتَ <قول هوية='٢٢١٠٩' ج="*">كَاْنَ حَلِيْمٌ</قول> أَوْ <قول هوية='١٥٣٥٢' ج="*">
  <تقدير>كَاْنَ</تقدير> رَجُلٌ</قول>
  </مقطع>
  <مقطع هوية='٢٢٩٨٠'>فَقَدْ بَدَأْتَ بِنَكِرَةٍ</مقطع>
  <مقطع هوية='٧٨٠٢٤'>وَلَا يَسْتَقِيْمُ أَنْ تُخْبِرَ الْمُخَاْطَبَ عَنْ الْمَنْكُوْرِ</مقطع>
  <مقطع هوية='٥١٩٠٢'>وَلَيْسَ هٰذَا بِالَّذِي يَنْزِلُ بِهِ الْمُخَاْطَبُ مَنْزِلَتَكَ فِي الْمَعْرِفَةِ</مقطع>
  <مقطع هوية='٠٤٤٠٠'>فَكَرِهُوا أَنْ يَقْرَبُوا بَاْبَ لَبْسٍ</مقطع>
  <مقطع هوية='٨٨٣٥٩'>وَقَدْ تَقُوْلُ <قول هوية='٦٠٦٢١'>كَاْنَ زَيْدٌ الطَّوِيْلُ مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='٢٠٣٧٥'>إِذَا خِفْتَ الْتِبَاْسَ الزَّيْدَيْنِ</مقطع>
  <مقطع هوية='١٧٠٣٠'>وَتَقُوْلُ <قول هوية='٢٢٠٣٨'>أَسَفِيْهًا كَاْنَ زَيْدٌ أَمْ حَلِيْمًا</قول>
  </مقطع>
  <مقطع هوية='٠٦٢٥١'>وَ<قول هوية='٦٤٣٦٩'>أَرَجُلًا كَاْنَ زَيْدٌ أَمْ صَبِيًّا</قول>
  </مقطع>
  <مقطع هوية='٨١١٨٥'>تَجْعَلُهَا لِـ<حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع هوية='٨١٤٠٤'>لِأَنَّهُ إِنَّمَا يَنْبَغِي لَكَ</مقطع>
  <مقطع هوية='٤١٣٥٣'>أَنْ تَسْأَلَهُ عَنْ خَبَرِ مَنْ هُوَ مَعْرُوْفٌ عِنْدَهُ</مقطع>
  <مقطع هوية='٠٤٨٠٦'>كَمَا حَدَّثْتَهُ عَنْ خَبَرِ مَنْ هُوَ مَعْرُوْفٌ عِنْدَكَ</مقطع>
  <مقطع هوية='٤٨٩٥٨'>فَالْمَعْرُوْفُ هُوَ الْمَبْدُوْءُ بِهِ</مقطع>
  <مقطع هوية='٦١٤٩٧'>وَلَا يُبْدَأُ بِمَا يَكُوْنُ فِيْهِ اللَّبْسُ وَهُوَ النَّكِرَةُ</مقطع>
  <مقطع هوية='٨٦١٢٦'>أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع هوية='٧٤٢١٣'>
    <قول هوية='٣٤٩٨٩' ج="?">كَاْنَ إِنْسَاْنٌ حَلِيْمًا</قول>
  </مقطع>
  <مقطع هوية='٠١١٧٥'>أَوْ <قول هوية='٧١٠٦٠' ج="?">كَاْنَ رَجُلٌ مَنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='٦٢٨٤٥'>كُنْتَ تُلْبِسُ</مقطع>
  <مقطع هوية='٧٠٤٢٧'>لِأَنَّهُ لَا يُسْتَنْكَرُ أَنْ يَكُوْنَ فِي الدُّنْيَا إِنْسَاْنٌ هٰكَذًا</مقطع>
  <مقطع هوية='٨٧٤٣٠'>فَكَرِهُوا أَنْ يَبْدَءُوْا بِمَا فِيْهِ اللَّبْسُ</مقطع>
  <مقطع هوية='٢٤١١٢'>وَيَجْعَلُوْا الْمَعْرِفَةَ خَبَرًا لِمَا يَكُوْنُ فِيْهِ هٰذَا اللَّبْسُ</مقطع>
  <مقطع هوية='٥٣٤٣٥'>وَقَدْ يَجُوْزُ فِي الشِّعْرِ وَفِيْ ضَعْفٍ مِنْ الْكَلَامِ</مقطع>
  <مقطع هوية='٦٤٨٤٧'>حَمَلَهُمْ عَلَى ذٰلِكَ</مقطع>
  <مقطع هوية='٧٧٨٤١'>أَنَّهُ فِعْلٌ بِمَنْزِلَةِ <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع هوية='٧٠٦٠٩'>وَأَنَّهُ قَدْ يُعْلَمُ</مقطع>
  <مقطع هوية='٨٣٦٩٣'>إِذَا ذَكَرْتَ زَيْدًا وَجَعَلْتُهُ خَبَرًا</مقطع>
  <مقطع هوية='٣٤١٩٢'>أَنَّهُ صَاْحِبُ الصِّفَةِ</مقطع>
  <مقطع هوية='٣٧٣٨٢'>عَلَى ضَعْفٍ مِنَ الْكَلَامِ</مقطع>
  <مقطع هوية='٨٥٦٨٠'>وَذٰلِكَ قَوْلُ خِدَاْشٍ بْنِ زُهَيْرٍ</مقطع>
  <شاهدة هوية='٦٥٢١٠'>
    <بيت>
      <مصراع>فَإِنَّكَ لَا تُبَاْلِي بَعْدَ حَوْلٍ</مصراع>
      <مصراع>أَظَبْيٌ كَاْنَ أُمُّكَ أَمْ حِمَاْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٦٨٩٠'>وَقَاْلَ حَسَّاْنُ بْنُ ثَاْبِتٍ</مقطع>
  <شاهدة هوية='٤٩١٨١'>
    <بيت>
      <مصراع>كَأَنَّ سَبِيْئَةً مِنْ بَيْتِ رَأْسِ</مصراع>
      <مصراع>يَكُوْنُ مِزَاْجَهَا عَسَلٌ وَمَاْءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٧١١٩'>وَقَاْلَ أَبُو قَيْسِ بْنِ الْأَسْلَتِ الْأَنْصَاْرِيّ</مقطع>
  <شاهدة هوية='٠١٦٣٢'>
    <بيت>
      <مصراع>أَلَا مَنْ مُبْلِغٌ حَسَّاْنَ عَنِّي</مصراع>
      <مصراع>أَسِحْرٌ كَاْنَ طِبَّكَ أَمْ جُنُوْنُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦١٨٤٦'>وَقَاْلَ الْفَرَزْدَقُ</مقطع>
  <شاهدة هوية='٩٢٢٠٨'>
    <بيت>
      <مصراع>أَسَكْرَاْنُ كَاْنَ ابْنَ الْمَرَاْغَةِ إِذْ هَجًا</مصراع>
      <مصراع>تَمِيْمًا بِجَوْفِ الشَّاْمِ أَمْ مُتَسَاْكِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥١٩٠٣'>فَهٰذَا إِنْشَاْدُ بَعْضِهِمْ</مقطع>
  <مقطع هوية='٨١٥٢٥'>وَأَكْثَرُهُمْ يَنْصِبُ الـ<حرف>سَّكْرَاْنَ</حرف>
  </مقطع>
  <مقطع هوية='٩٢٧٤٤'>وَيَرْفَعُ الْآخِرَ عَلَى قَطْعٍ وَاْبْتِدَاْءٍ</مقطع>
  <مقطع هوية='٧١٢٠٤'>وَإِذَا كَاْنَا مَعْرِفَةً فَأَنْتَ بِالْخِيَاْرِ</مقطع>
  <مقطع هوية='٠٩٩٤٦'>أَيُّهُمَا مَا جَعَلْتَهُ فَاْعِلًا رَفَعْتَهُ وَنَصَبْتَ الْآخَرَ</مقطع>
  <مقطع هوية='١٩٢٩٣'>كَمَا فَعَلْتَ ذٰلِكَ فِي <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع هوية='٩٣٢٢٤'>وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٣٦١٧٩'>
    <قول هوية='٧١٠١٨'>كَاْنَ أَخُوْكَ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٢٢١١٤'>وَ<قول هوية='٩٣٧٠٠'>كَاْنَ زَيْدٌ صَاْحِبَكَ</قول>
  </مقطع>
  <مقطع هوية='٢٤١٨٠'>وَ<قول هوية='٦٨٧٤٧'>كَاْنَ هٰذَا زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٦٣٦٧٥'>وَ<قول هوية='٥٨٥١٨'>كَاْنَ الْمُتَكَلِّمُ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٠٢٩٠٤'>وَتَقُوْلُ <قول هوية='٣٥٢٨٢'>مَنْ كَاْنَ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٣١١١٣'>وَ<قول هوية='٦٥٨٣٢'>مَنْ كَاْنَ أَخُوْكَ</قول>
  </مقطع>
  <مقطع هوية='١٦٠٧٨'>كَمَا تَقُوْلُ <قول هوية='٤٣٥٥٩'>مَنْ ضَرَبَ أَبَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٠٨١٥'>إِذَا جَعَلْتَ <حرف>مَنْ</حرف> الْفَاْعِلَ</مقطع>
  <مقطع هوية='٤٣٨٤٢'>وَ<قول هوية='٥٨١٤٢'>مَنْ ضَرَبَ أَبُوْكِ</قول>
  </مقطع>
  <مقطع هوية='٨٨٤٩٤'>إِذَا جَعَلْتَ الْـ<حرف>أَبَ</حرف> الْفَاْعِلَ</مقطع>
  <مقطع هوية='٧٩٠٦١'>وَكَذٰلِكَ <قول هوية='٦٩٦٨٧'>أَيُّهُمْ كَاْنَ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٧٣١٠٤'>وَ<قول هوية='٠٦٢٩٨'>أَيَّهُمْ كَاْنَ أَخُوْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٩٧٣٩'>وَتَقُوْلُ <قول هوية='١٧٦٩٤'>مَا كَاْنَ أَخَاْكَ إِلَّا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٤٤٠٥١'>كَقَوْلِكَ <قول هوية='٧١٤٠٨'>مَا ضَرَبَ أَخَاْكَ إِلَّا زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٦٠٠٨٩'>وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='١٠١٨٠'>
    <آية هوية='٣١٦٠٤' سورة="٤٥" آية="٢٥">مَا كَاْنَ حُجَّتَهُمْ إِلَّا أَنْ قَاْلُوْا</آية>
  </مقطع>
  <مقطع هوية='٤٠٩٠٥'>وَ<آية هوية='٥٨١٣٦' سورة="٧" آية="٨٢">وَمَا كَاْنَ جَوَاْبَ قَوْمِهِ إِلَّا أَنْ قَاْلُوْا</آية>
  </مقطع>
  <مقطع هوية='٠٦٤٤٩'>وَقَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة هوية='٠٢٧٤٥'>
    <بيت>
      <مصراع>وَقَدْ عَلِمَ الْأَقْوَاْمُ مَا كَاْنَ دَاْئِهًا</مصراع>
      <مصراع>بِثَهْلَاْنَ إِلَّا الْخِزْيُ مِمَّنْ يَقُوْدُهًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٧٢٤٥'>وَإِنْ شِئْتَ رَفَعْتَ الْأَوَّلَ</مقطع>
  <مقطع هوية='٧٩٠٣٣'>كَمَا تَقُوْلُ <قول هوية='٨١٦٣٦'>مَا ضَرَبَ أَخُوْكَ إِلَّا زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٨٢١٨٤'>وَقَدْ قَرَأَ بَعْضُ الْقُرَّاْءِ مَا ذَكَرْنَا بِالرَّفْعِ</مقطع>
  <مقطع هوية='١٢٦٩٩'>وَمِثْلُ قَوْلِهِمْ <قول هوية='٩٧٥٦٢'>مَنْ كَاْنَ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٣٧٥٢٩'>قَوْلُ الْعَرَبِ <قول هوية='٦٩٩٥٩'>مَا جَاْءَتْ حَاْجَتَكَ</قول>
  </مقطع>
  <مقطع هوية='٦٠٨٢١'>كَأَنَّهُ قَالَ <قول هوية='٥٥٣٦٩'>مَا صَاْرَتْ حَاْجَتَكَ</قول>
  </مقطع>
  <مقطع هوية='٧٤١١١'>وَلَكِنَّهُ أَدْخَلَ التَّأْنِيْثَ عَلَى <حرف>مًا</حرف> حَيْثُ كَاْنَتِ الْحَاْجَةَ</مقطع>
  <مقطع هوية='٦٧١٥٨'>كَمَا قَالَ بَعْضُ الْعَرَبِ <قول هوية='١٤٥٢٨'>مَنْ كَاْنَتْ أُمَّكَ</قول>
  </مقطع>
  <مقطع هوية='٥٣٤٧٤'>حَيْثُ أَوْقَعَ <حرف>مَنْ</حرف> عَلَى مُؤَنَّثٍ</مقطع>
  <مقطع هوية='٩٧٠٩١'>وَإِنَّمَا صُيِّرَ <حرف>جَاْءَ</حرف> بِمَنْزِلَةِ <حرف>كَاْنَ</حرف>
  </مقطع>
  <مقطع هوية='٥٦٣٤٥'>فَِي هٰذَا الْحَرْفِ وَحْدَهُ</مقطع>
  <مقطع هوية='٨٧٥٨٢'>لِأَنَّهُ بِمَنْزِلَةِ الْمَثَلِ</مقطع>
  <مقطع هوية='٩٨٣٧٥'>كَمَا جَعَلُوا <حرف>عَسَى</حرف> بِمَنْزِلَةِ <حرف>كَاْنَ</حرف> فِي قَوْلِهِمْ <قول هوية='١١٩٢٦'>عَسَى الْغُوَيْرُ أَبْؤُسًا</قول>
  </مقطع>
  <مقطع هوية='٤٧٣٣٣'>وَلَا يُقَاْلُ <قول هوية='٥٦٢٤٣'>عَسَيْتَ أَخَاْنًا</قول>
  </مقطع>
  <مقطع هوية='٤٨٦٠٦'>وَكَمَا جَعَلُوْا <حرف>لَدُنْ</حرف> مَعَ <حرف>غُدْوَةً</حرف> مُنَوَّنَةً فِي قَوْلِهِمْ <قول هوية='١٧٥٥٧'>لَدُنْ غُدْوَةً</قول>
  </مقطع>
  <مقطع هوية='٨٦٦٥٥'>وَمِنْ كَلَاْمِهِمْ أَنْ يَجْعَلُوْا الشَّيْءَ فِي مَوْضِعٍ</مقطع>
  <مقطع هوية='١٨٥٤٩'>عَلَى غَيْرِ حَاْلِهِ فِي سَاْئِرِ الْكَلَاْمِ</مقطع>
  <مقطع هوية='٢٥٢٤٨'>وَسَتَرَى مِثْلَ ذٰلِكَ إِنْ شَاْءَ اللهُ</مقطع>
  <مقطع هوية='٠٢٥٦٥'>وَمَنْ يَقُوْلُ مِنَ الْعَرَبِ <قول هوية='٨٢٩٤٥'>مَا جَاْءَتْ حَاْجَتُكَ</قول> كَثِيرٌ</مقطع>
  <مقطع هوية='٤٩٠٤٣'>كَمَا يَقُوْلُ <قول هوية='٠٦٥٧٢'>مَنْ كَاْنَتْ أُمُّكَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٧٦٨'>وَلَمْ يَقُوْلُوْا <قول هوية='٠١٥٧٣'>مَا جَاْءَ حَاْجَتَكَ</قول>
  </مقطع>
  <مقطع هوية='٤٤٤٠٠'>كَمَا قَالُوْا <قول هوية='٢٦٦٤٣'>مَنْ كَاْنَ أُمَّكَ</قول>
  </مقطع>
  <مقطع هوية='١٤٣٥٠'>لِأَنَّهُ بِمَنْزِلَةِ الْمَثَلِ فَأَلْزَمُوْهُ التَّاْءَ</مقطع>
  <مقطع هوية='٨٢٩٣٢'>كَمَا اتَّفَقُوْا عَلَى <قول هوية='٣١٥٥٤'>لَعَمْرُ اللهِ</قول> فَِي الْيَمِيْنِ</مقطع>
  <مقطع هوية='٨٣٢١٢'>وَزَعَمَ يُوْنُسُ أَنَّهُ سَمِعَ رُؤْبَةُ يَقُوْلُ</مقطع>
  <مقطع هوية='٦٩٩١٧'>
    <قول هوية='٧١٨١٣'>مَا جَاْءَتْ حَاْجَتُكَ</قول>
  </مقطع>
  <مقطع هوية='٩٥٣٢٣'>فَيَرْفَعُ</مقطع>
  <مقطع هوية='٩٢١٦٢'>وَمِثْلُ قَوْلِهِمْ <حرف>مَا جَاْءَتْ حَاْجَتَكَ</حرف> إِذْ صَاْرَتْ تَقَعُ عَلَى مُؤَنَّثٍ</مقطع>
  <مقطع هوية='٣٥٥٢٢'>قَرَاْءَةُ بَعْضِ الْقُرَّاْءِ</مقطع>
  <مقطع هوية='٩٠٥٨٦'>
    <آية هوية='٤٥٧٧٢' سورة="٦" آية="٢٣">ثُمَّ لَمْ تَكُنْ فِتْنَتُهُمْ إِلَّا أَنْ قَاْلُوْا</آية>
  </مقطع>
  <مقطع هوية='٧٥٣٩٢'>وَ<آية هوية='٢٨٥٢١' سورة="١٢" آية="١٠">تَلْتَقِطْهُ بَعْضُ السَّيَّاْرَةِ</آية>
  </مقطع>
  <مقطع هوية='٩٦٨٧٤'>وَرُبَّمَا قَاْلُوْا فِي بَعْضِ الْكَلَاْمِ</مقطع>
  <مقطع هوية='٩٩٩٠٨'>
    <قول هوية='٦٥٤٥٠'>ذَهَبَتْ بَعْضُ أَصَاْبِعِهِ</قول>
  </مقطع>
  <مقطع هوية='٧٤٠٣١'>وَإِنَّمَا أَنَّثَ الْـ<حرف>بَعْضَ</حرف> لِأَنَّهُ أَضَاْفَهُ إِلَى مُؤَنَّثٍ هُوَ مِنْهُ</مقطع>
  <مقطع هوية='٩٠٦٢٦'>وَلَوْ لَمْ يَكُنْ مِنْهُ لَمْ يُؤَنِّثْهُ</مقطع>
  <مقطع هوية='٦٥٣٢٠'>لِأَنَّهُ لَوْ قَالَ <قول هوية='٣٧٥٦٠'>ذَهَبَتْ عَبْدُ أُمِّكَ</قول> لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية='٨٧٣٦١'>وَمِمَّا جَاْءَ مِثْلُهُ فِي الشِّعْرِ قَوْلُ الشَّاْعِرِ الْأَعْشَى</مقطع>
  <شاهدة هوية='٩٢٠٣١'>
    <بيت>
      <مصراع>وَتَشْرَقُ بِالْقَوْلِ الَّذِي قَدْ أَذَعْتَهُ</مصراع>
      <مصراع>كَمَا شَرِقَتْ صَدْرُ الْقَنَاْةِ مِنَ الدَّمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤١٥٠٠'>لِأَنَّ <حرف>صَدْرَ الْقَنَاْةِ</حرف> مِنْ مُؤَنَّثٍ</مقطع>
  <مقطع هوية='٣٥٠٤٣'>وَمِثْلُهُ قَوْلُ جَرِيْرٍ</مقطع>
  <شاهدة هوية='٧٩٤٤٣'>
    <بيت>
      <مصراع>إِذَا بَعْضُ السِّنِيْنَ تَعَرَّقَتْنًا</مصراع>
      <مصراع>كَفَى الْأَيْتَاْمَ فَقْدَ أَبِي الْيَتِيْمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٦٥٤٢'>لِأَنَّ <حرف>بَعْضَ</حرف> هٰهُنَا سِنُوْنَ</مقطع>
  <مقطع هوية='٨٢١٧٤'>وَمِثْلُهُ قَوْلُ جَرِيْرٍ أَيْضًا</مقطع>
  <شاهدة هوية='٣٢٠٦٠'>
    <بيت>
      <مصراع>لَمَّا أَتَى خَبَرُ الزُّبَيْرِ تَوَاْضَعَتْ</مصراع>
      <مصراع>سُوْرُ الْمَدِيْنَةِ وَالْجِبَاْلُ الْخُشَّعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٨٦١٦'>وَمِثْلُهُ قَوْلِ ذِي الرُّمَّةِ</مقطع>
  <شاهدة هوية='٥٦٠٠٠'>
    <بيت>
      <مصراع>مَشَيْنَ كَمَا اهْتَزَّتْ رِمَاْحٌ تَسَفَّهَتْ</مصراع>
      <مصراع>أَعَاْلِيَهَا مَرُّ الرِّيَاْحِ النَّوَاْسِمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٥٨٣١'>وَقَاْلَ الْعَجَّاْجُ</مقطع>
  <شاهدة هوية='٠١١٠٥'>
    <بيت>
      <مصراع>طُوْلُ اللَّيَاْلِي أَسْرَعَتْ فِي نَقْضِي</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٨٤٢٠'>وَسَمِعْنَا مَنْ يُوْثَقُ بِهِ مِنَ الْعَرَبِ يَقُوْلُ</مقطع>
  <مقطع هوية='١٠٠٧٢'>
    <قول هوية='٩٨٨٠٦'>اجْتَمَعَتْ أَهْلُ الْيَمَاْمِةِ</قول>
  </مقطع>
  <مقطع هوية='١٩٥٥٦'>لِأَنَّهُ يَقُوْلُ فِي كَلَامِهِ <قول هوية='٥٥٤٥٧'>اجْتَمَعَتِ الْيَمَاْمَةُ</قول>
  </مقطع>
  <مقطع هوية='٥١٢٦٧'>يَعْنِي <حرف>أَهْلَ الْيَمَاْمَةِ</حرف>
  </مقطع>
  <مقطع هوية='٥٩١٧١'>فَأَنَّثَ الْفِعْلَ فِي اللَّفْظِ إِذْ جَعَلَهُ فِي اللَّفْظِ لِلْيَمَامَةِ</مقطع>
  <مقطع هوية='١٩٦٠٢'>فَتَرَكَ اللَّفْظَ يُكُوْنُ عَلَى مَا يَكُوْنُ عَلَيْهِ فَِي سَعَةِ الْكَلَامِ</مقطع>
  <مقطع هوية='٠٣٦٢٢'>وَمِثْلُهُ فِي هٰذَا <قول هوية='٣٤٣٨٤'>يَا طَلْحَةَ أَقْبِلْ</قول>
  </مقطع>
  <مقطع هوية='٣٨٤٤٥'>لِأَنَّ أَكْثَرَ مَا يَدْعُو <حرف>طَلْحَةَ</حرف> بِالتَّرْخِيمِ</مقطع>
  <مقطع هوية='٧٦٤٨٦'>فَتَرَكَ الْحَاْءَ عَلَى حَالِهًا</مقطع>
  <مقطع هوية='٠٤١٤١'>وَ<قول هوية='١٧٤٠١'>يَا تَيْمَ تَيْمَ عَدِيٍّ أَقْبِلْ</قول>
  </مقطع>
  <مقطع هوية='٨١١١٨'>وَقَالَ الشَّاْعِرُ جَرِيْرٍ</مقطع>
  <شاهدة هوية='١٢٦٧٠'>
    <بيت>
      <مصراع>يَا تَيْمَ تَيْمَ عَدِيٍّ لَا أَبَا لَكُمُ</مصراع>
      <مصراع>لَا يُلْقِيَنَّكُمُ فِي سَوْءَةٍ عُمَرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٥٢٦١'>وَسَتَرَى هٰذَا مُبَيَّنًا فِي مَوَاْضِعِهِ إِنْ شَاْءَ اللهُ</مقطع>
  <مقطع هوية='٥٣١٧٦'>وَتَرْكُ التَّاْءِ فِي جَمِيْعِ هٰذَا الْحَدُّ وَالْوَجْهُ</مقطع>
  <مقطع هوية='٦٤٩٤٢'>وَسَتَرَى مَا إِثْبَاْتُ التَّاْءِ فِيْهِ حَسَنٌ إِنْ شَاْءَ اللهُ</مقطع>
  <مقطع هوية='٠٠٧٣٧'>مِنْ هٰذَا النَّحْوِ لِكَثْرَتِهِ فِي كَلَامِهِمْ</مقطع>
  <مقطع هوية='١٤٢٩٨'>وَسَيُبَيَّنُ فِي بَاْبِهِ</مقطع>
  <مقطع هوية='١٦٤٩٨'>فَإِنْ قُلْتُ <قول هوية='٤٦٠٨٤' ج="*">مَنْ ضَرَبَتْ عَبْدُ أُمِّكَ</قول>
  </مقطع>
  <مقطع هوية='٨٢٣٧٨'>أَوْ <قول هوية='٦٨٩٣٢' ج="*">هَذِهِ عَبْدُ زَيْنَبَ</قول>
  </مقطع>
  <مقطع هوية='١٨٠٧٦'>لَمْ يَجُزْ</مقطع>
  <مقطع هوية='٢٨٦٣٢'>لِأَنَّهُ لَيْسَ مِنْهَا وَلَا بِهَا</مقطع>
  <مقطع هوية='٢٤٧٨٨'>وَلَا يَجُوْزُ أَنْ تَلْفِظَ بِهَا وَأَنْتَ تُرِيْدُ الْعَبْدَ</مقطع>
