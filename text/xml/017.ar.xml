     بلاق="١-٢١"
     درنبورج="١-١٦"
     البكاء="١-١٠٤"
     هارون="١-٤٥"
     يعقوب="١-٨٢"
     رقم="١٧">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الْفِعْلِ الَّذِي يَتَعَدَّى ٱسْمَ الْفَاْعِلِ إِلَى الْمَفْعُوْلِ</مقطع>
    <مقطع رقم="٢">وَٱسْمُ الْفَاْعِلِ وَالْمَفْعُوْلِ فِيْهِ لِشَيْءٍ وَاْحِدٍ</مقطع>
  </عنوان>
  <!-- كَاْنَ وَأَخُوتهَا -->
  <مقطع رقم="٣">فَمِنْ ثَمَّ ذُكِرَ عَلَى حِدَتِهِ</مقطع>
  <مقطع رقم="٤">وَلَمْ يُذْكَرْ مَعَ الْأَوَّلِ</مقطع>
  <مقطع رقم="٥">وَلَا يَجُوْزُ فِيْهِ الِاقْتِصَاْرُ عَلَى الْفَاْعِلِ</مقطع>
  <مقطع رقم="٦">كَمَا لَمْ يَجُزْ فِي <حرف>ظَنَنْتُ</حرف> الِاقْتِصَاْرُ عَلَى الْمَفْعُوْلِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٧">لِأَنَّ حَالُكَ فِي الِاحْتِيَاْجِ إِلَى الْآخِرِ هٰهُنًا</مقطع>
  <مقطع رقم="٨">كَحَالِكَ فِي الِاحْتِيَاْجِ إِلَيْهِ ثَمَّةَ</مقطع>
  <مقطع رقم="٩">وَسَنُبَيِّنُ لَكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٠">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="١١">
    <حرف>كَاْنَ</حرف> وَ<حرف>يَكُوْنُ</حرف> وَ<حرف>صَاْرَ</حرف> وَ<حرف>مَا دَاْمَ</حرف> وَ<حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="١٢">وَمَا كَاْنَ نَحْوَهُنَّ مِنَ الْفِعْلِ</مقطع>
  <مقطع رقم="١٣">مِمَّا لَا يَسْتَغْنِي عَنْ الْخَبَرِ</مقطع>
  <مقطع رقم="١٤">تَقُوْلُ <قول رقم="١">كَاْنَ عَبْدُ اللّٰهِ أَخَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٥">فَإِنَّمَا أَرَدْتَ أَنْ تُخْبِرَ عَنْ الْأُخُوَّةِ</مقطع>
  <مقطع رقم="١٦">وَأَدْخَلْتَ <حرف>كَانَ</حرف> لِتَجْعَلَ ذٰلِكَ فِيْمَا مَضَى</مقطع>
  <مقطع رقم="١٧">وَذَكَرْتَ الْأَوَّلَ</مقطع>
  <مقطع رقم="١٨">كَمَا ذَكَرْتَ الْمَفْعُوْلَ الْأَوَّلَ مِنْ <حرف>ظَنَنْتُ</حرف>
  </مقطع>
  <مقطع رقم="١٩">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٢">كَانَ أَخَاكَ عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٢٠">فَقَدَّمْتَ وَأَخَّرْتَ كَمَا فَعَلْتَ ذٰلِكَ فِي <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع رقم="٢١">لِأَنَّهُ فِعْلٌ مِثْلُهُ</مقطع>
  <مقطع رقم="٢٢">وَحَاْلُ التَّقْدِيْمِ وَالتَّأْخِيْرِ فِيْهِ كَحَاْلِهِ فِي <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع رقم="٢٣">إِلَّا أَنَّ ٱسْمَ الْفَاْعِلِ وَالْمَفْعُوْلِ فِيْهِ لِشَيْءٍ وَاْحِدٍ</مقطع>
  <مقطع رقم="٢٤">وَتَقُوْلُ <قول رقم="٣">كُنَّاْهُمْ</قول>
  </مقطع>
  <مقطع رقم="٢٥">كَمَا تَقُوْلُ <قول رقم="٤">ضَرَبْنَاْهُمْ</قول>
  </مقطع>
  <مقطع رقم="٢٦">وَتَقُوْلُ <قول رقم="٥">إِذَا لَمْ نَكُنْهُمْ فَمَنْ ذَا يَكُوْنُهُمْ</قول>
  </مقطع>
  <مقطع رقم="٢٧">كَمَا تَقُوْلُ <قول رقم="٦">إِذَا لَمْ نَضْرِبْهُمْ فَمَنْ يَضْرِبُهُمْ</قول>
  </مقطع>
  <مقطع رقم="٢٨">قَالَ أَبُوْ الْأَسْوَدِ الْدُّؤَلِىِّ</مقطع>
  <شاهدة مقطع="٢٩" رقم="١">
    <بيت>
      <مصراع>فَإِنْ لَا يَكُنْهَا أَوْ تَكُنْهُ فَإِنَّهُ</مصراع>
      <مصراع>أَخُوْهَا غَذَتْهُ أُمُّهُ بِلَبَانِهِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٠">فَهُوَ <حرف>كَاْئِنٌ</حرف> وَ<حرف>مَكُوْنٌ</حرف>
  </مقطع>
  <مقطع رقم="٣١">كَمَا تَقُوْلُ <حرف>ضَاْرِبٌ</حرف> وَ<حرف>مَضْرُوبٌ</حرف>
  </مقطع>
  <مقطع رقم="٣٢">وَقَدْ يَكُوْنُ لِـ<حرف>كَاْنَ</حرف> مَوْضِعٌ آخَرُ</مقطع>
  <مقطع رقم="٣٣">يَقْتَصِرُ عَلَى الْفَاْعِلِ فِيْهِ</مقطع>
  <مقطع رقم="٣٤">تَقُوْلُ <قول رقم="٧">قَدْ كَاْنَ عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٣٥">أَيْ <قول رقم="٨">قَدْ خُلِقَ عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٣٦">وَ<قول رقم="٩">قَدْ كَاْنَ الْأَمْرُ</قول>
  </مقطع>
  <مقطع رقم="٣٧">أَيْ <قول رقم="١٠">وَقَعَ الْأَمْرُ</قول>
  </مقطع>
  <مقطع رقم="٣٨">وَ<قول رقم="١١">قَدْ دَاْمَ فُلَاْنٌ</قول>
  </مقطع>
  <مقطع رقم="٣٩">أَيْ <قول رقم="١٢">ثَبَتَ</قول>
  </مقطع>
  <مقطع رقم="٤٠">كَمَا تَقُوْلُ <قول رقم="١٣">رَأَيْتُ زَيْدًا</قول> تُرِيْدُ رُؤْيَةَ الْعَيْنِ</مقطع>
  <مقطع رقم="٤١">وَكَمَا تَقُوْلُ <قول رقم="١٤">أَنَا وَجَدْتُهُ</قول> تُرِيْدُ وِجْدَاْنَ الضَّالَّةِ</مقطع>
  <مقطع رقم="٤٢">وَكَمَا يَكُوْنُ <حرف>أَصْبَحَ</حرف> وَ<حرف>أَمْسَى</حرف>
  </مقطع>
  <مقطع رقم="٤٣">مَرَّةً بِمَنْزِلَةِ <حرف>كَاْنَ</حرف>
  </مقطع>
  <مقطع رقم="٤٤">وَمَرَّةً بِمَنْزِلَةِ قَوْلِكَ <حرف>اسْتَيْقَظُوْا</حرف> وَ<حرف>نَاْمُوْا</حرف>
  </مقطع>
  <مقطع رقم="٤٥">فَأَمَّا <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="٤٦">فَإَّنهُ لَا يَكُوْنُ فِيْهَا ذٰلِكَ</مقطع>
  <مقطع رقم="٤٧">لِأَنَّهَا وُضِعَتْ مَوْضِعًا وَاْحِدًا</مقطع>
  <مقطع رقم="٤٨">وَمِنْ ثَمَّ لَمْ تَصَرَّفْ تَصَرُّفَ الْفِعْلِ الْآخَرِ</مقطع>
  <مقطع رقم="٤٩">فَمِمَّا جَاْءَ عَلَى <حرف>وَقَعَ</حرف>
  </مقطع>
  <مقطع رقم="٥٠">قَوْلُهُ وَهُوَ مَقَّاْسٌ الْعَاْئِذِيّ</مقطع>
  <شاهدة مقطع="٥١" رقم="٢">
    <بيت>
      <مصراع>فِدًى لِبَنِي ذُهْلِ بْنِ شَيْبَاْنَ نَاْقَتِي</مصراع>
      <مصراع>إِذَا كَاْنَ يَوْمٌ ذُو كَوَاْكِبَ أَشْهَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٢">أَيْ <حرف>إِذَا وَقَعَ</حرف>
  </مقطع>
  <مقطع رقم="٥٣">وَقَالَ الْآخَرُ عَمْرٌو بْنُ شَأْسٍ</مقطع>
  <شاهدة مقطع="٥٤" رقم="٣">
    <بيت>
      <مصراع>بَنِي أَسَدٍ هَلْ تَعْلَمُوْنَ بَلَاْءَنًا</مصراع>
      <مصراع>إِذَا كَاْنَ يَوْمًا ذَا كَوَاْكِبَ أَشْنَعًا</مصراع>
    </بيت>
    <بيت>
      <مصراع>إِذَا كَاْنَتْ الْحُوُّ الطِّوَاْلُ كَأَنَّمًا</مصراع>
      <مصراع>كَسَاْهَا السِّلَاْحُ الْأُرْجُوَاْنَ الْمُضَلَّعًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٥">أَضْمَرَ لِعِلْمِ الْمُخَاْطَبِ بِمَا يَعْنِي وَهُوَ <حرف>الْيَوْمُ</حرف>
  </مقطع>
  <مقطع رقم="٥٦">وَسَمِعْتُ بَعْضَ الْعَرَبِ يَقُوْلُ <حرف>أَشْنَعًا</حرف> وَيَرْفَعُ مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٥٧">كَأَنَّهُ قَالَ <قول رقم="١٥">إِذَا وَقَعَ يَوْمٌ ذُو كَوَاْكِبَ أَشْنَعًا</قول>
  </مقطع>
  <مقطع رقم="٥٨">وَاعْلَمْ أَنَّهُ إِذَا وَقَعَ فِي هٰذَا الْبَاْبِ نَكِرَةٌ وَمَعْرِفَةٌ</مقطع>
  <مقطع رقم="٥٩">فَالَّذِي تَشْغَلُ بِهِ كَاْنَ الْمَعْرِفَةُ</مقطع>
  <مقطع رقم="٦٠">لِأَنَّهُ حَدُّ الْكَلَامِ</مقطع>
  <مقطع رقم="٦١">لِأَنَّهُمَا شَيءٌ وَاْحِدٌ</مقطع>
  <مقطع رقم="٦٢">وَلَيْسَ بِمَنْزِلَةِ قَوْلِكَ <قول رقم="١٦">ضَرَبَ رَجُلٌ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٦٣">لِأَنَّهُمَا شَيْئَاْنِ مُخْتَلِفَاْنِ</مقطع>
  <مقطع رقم="٦٤">وَهُمَا فِي <حرف>كَاْنَ</حرف> بِمَنْزِلَتِهِمَا فَيِ الِابْتِدَاْءِ إِذَا قُلْتَ</مقطع>
  <مقطع رقم="٦٥">
    <قول رقم="١٧">عَبْدُ اللّٰهِ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٦٦">تَبْتَدِئُ بِالْأَعْرَفِ ثُمَّ تَذْكُرُ الْخَبَرَ</مقطع>
  <مقطع رقم="٦٧">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٦٨">
    <قول رقم="١٨">كَانَ زَيْدٌ حَلِيْمًا</قول>
  </مقطع>
  <مقطع رقم="٦٩">وَ<قول رقم="١٩">كَانَ حَلِيْمًا زِيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٧٠">لَا عَلَيْكَ أَقَدَّمْتَ أَمْ أَخَّرْتَ</مقطع>
  <مقطع رقم="٧١">إِلَا أَنَّهُ عَلَى مَا وَصَفْتُ لَكَ</مقطع>
  <مقطع رقم="٧٢">فِي قَوْلِكَ <قول رقم="٢٠">ضَرَبَ زَيْدًا عَبْدُ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٧٣">فَإِذَا قُلْتَ <قول رقم="٢١">كَانَ زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٧٤">فَقَدْ ابْتَدَأْتَ بِمَا هُوَ مَعْرُوْفٌ عِنْدَهُ مِثْلُهُ عِنْدَكَ</مقطع>
  <مقطع رقم="٧٥">فَإِنَّمَا يَنْتَظِرُ الْخَبَرَ</مقطع>
  <مقطع رقم="٧٦">فَإِذَا قُلْتَ <حرف>حَلِيْمًا</حرف> فَقَدْ أَعْلَمْتَهُ مِثْلَ مَا عَلِمْتَ</مقطع>
  <مقطع رقم="٧٧">فَإِذَا قُلْتَ <قول رقم="٢٢">كَاْنَ حَلِيْمًا</قول>
  </مقطع>
  <مقطع رقم="٧٨">فَإِنَّمَا يَنتَظِرُ أَنْ تُعَرِّفَهُ صَاْحِبَ الصِّفَةِ</مقطع>
  <مقطع رقم="٧٩">فَهُوَ مَبْدُوْءٌ فِي الْفِعْلِ</مقطع>
  <مقطع رقم="٨٠">وَإِنْ كَاْنَ مُؤَخَّرًا فِي اللَّفْظِ</مقطع>
  <مقطع رقم="٨١">فَإِنْ قُلْتَ <قول ج="*" رقم="٢٣">كَاْنَ حَلِيْمٌ</قول> أَوْ <قول ج="*" رقم="٢٤">
  <تقدير>كَاْنَ</تقدير> رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="٨٢">فَقَدْ بَدَأْتَ بِنَكِرَةٍ</مقطع>
  <مقطع رقم="٨٣">وَلَا يَسْتَقِيْمُ أَنْ تُخْبِرَ الْمُخَاْطَبَ عَنْ الْمَنْكُوْرِ</مقطع>
  <مقطع رقم="٨٤">وَلَيْسَ هٰذَا بِالَّذِي يَنْزِلُ بِهِ الْمُخَاْطَبُ مَنْزِلَتَكَ فِي الْمَعْرِفَةِ</مقطع>
  <مقطع رقم="٨٥">فَكَرِهُوا أَنْ يَقْرَبُوا بَاْبَ لَبْسٍ</مقطع>
  <مقطع رقم="٨٦">وَقَدْ تَقُوْلُ <قول رقم="٢٥">كَاْنَ زَيْدٌ الطَّوِيْلُ مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٨٧">إِذَا خِفْتَ الْتِبَاْسَ الزَّيْدَيْنِ</مقطع>
  <مقطع رقم="٨٨">وَتَقُوْلُ <قول رقم="٢٦">أَسَفِيْهًا كَاْنَ زَيْدٌ أَمْ حَلِيْمًا</قول>
  </مقطع>
  <مقطع رقم="٨٩">وَ<قول رقم="٢٧">أَرَجُلًا كَاْنَ زَيْدٌ أَمْ صَبِيًّا</قول>
  </مقطع>
  <مقطع رقم="٩٠">تَجْعَلُهَا لِـ<حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٩١">لِأَنَّهُ إِنَّمَا يَنْبَغِي لَكَ</مقطع>
  <مقطع رقم="٩٢">أَنْ تَسْأَلَهُ عَنْ خَبَرِ مَنْ هُوَ مَعْرُوْفٌ عِنْدَهُ</مقطع>
  <مقطع رقم="٩٣">كَمَا حَدَّثْتَهُ عَنْ خَبَرِ مَنْ هُوَ مَعْرُوْفٌ عِنْدَكَ</مقطع>
  <مقطع رقم="٩٤">فَالْمَعْرُوْفُ هُوَ الْمَبْدُوْءُ بِهِ</مقطع>
  <مقطع رقم="٩٥">وَلَا يُبْدَأُ بِمَا يَكُوْنُ فِيْهِ اللَّبْسُ وَهُوَ النَّكِرَةُ</مقطع>
  <مقطع رقم="٩٦">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع رقم="٩٧">
    <قول ج="?" رقم="٢٨">كَاْنَ إِنْسَاْنٌ حَلِيْمًا</قول>
  </مقطع>
  <مقطع رقم="٩٨">أَوْ <قول ج="?" رقم="٢٩">كَاْنَ رَجُلٌ مَنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٩٩">كُنْتَ تُلْبِسُ</مقطع>
  <مقطع رقم="١٠٠">لِأَنَّهُ لَا يُسْتَنْكَرُ أَنْ يَكُوْنَ فِي الدُّنْيَا إِنْسَاْنٌ هٰكَذًا</مقطع>
  <مقطع رقم="١٠١">فَكَرِهُوا أَنْ يَبْدَءُوْا بِمَا فِيْهِ اللَّبْسُ</مقطع>
  <مقطع رقم="١٠٢">وَيَجْعَلُوْا الْمَعْرِفَةَ خَبَرًا لِمَا يَكُوْنُ فِيْهِ هٰذَا اللَّبْسُ</مقطع>
  <مقطع رقم="١٠٣">وَقَدْ يَجُوْزُ فِي الشِّعْرِ وَفِيْ ضَعْفٍ مِنْ الْكَلَامِ</مقطع>
  <مقطع رقم="١٠٤">حَمَلَهُمْ عَلَى ذٰلِكَ</مقطع>
  <مقطع رقم="١٠٥">أَنَّهُ فِعْلٌ بِمَنْزِلَةِ <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع رقم="١٠٦">وَأَنَّهُ قَدْ يُعْلَمُ</مقطع>
  <مقطع رقم="١٠٧">إِذَا ذَكَرْتَ زَيْدًا وَجَعَلْتُهُ خَبَرًا</مقطع>
  <مقطع رقم="١٠٨">أَنَّهُ صَاْحِبُ الصِّفَةِ</مقطع>
  <مقطع رقم="١٠٩">عَلَى ضَعْفٍ مِنَ الْكَلَامِ</مقطع>
  <مقطع رقم="١١٠">وَذٰلِكَ قَوْلُ خِدَاْشٍ بْنِ زُهَيْرٍ</مقطع>
  <شاهدة مقطع="١١١" رقم="٤">
    <بيت>
      <مصراع>فَإِنَّكَ لَا تُبَاْلِي بَعْدَ حَوْلٍ</مصراع>
      <مصراع>أَظَبْيٌ كَاْنَ أُمُّكَ أَمْ حِمَاْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١٢">وَقَاْلَ حَسَّاْنُ بْنُ ثَاْبِتٍ</مقطع>
  <شاهدة مقطع="١١٣" رقم="٥">
    <بيت>
      <مصراع>كَأَنَّ سَبِيْئَةً مِنْ بَيْتِ رَأْسِ</مصراع>
      <مصراع>يَكُوْنُ مِزَاْجَهَا عَسَلٌ وَمَاْءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١٤">وَقَاْلَ أَبُو قَيْسِ بْنِ الْأَسْلَتِ الْأَنْصَاْرِيّ</مقطع>
  <شاهدة مقطع="١١٥" رقم="٦">
    <بيت>
      <مصراع>أَلَا مَنْ مُبْلِغٌ حَسَّاْنَ عَنِّي</مصراع>
      <مصراع>أَسِحْرٌ كَاْنَ طِبَّكَ أَمْ جُنُوْنُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١٦">وَقَاْلَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="١١٧" رقم="٧">
    <بيت>
      <مصراع>أَسَكْرَاْنُ كَاْنَ ابْنَ الْمَرَاْغَةِ إِذْ هَجًا</مصراع>
      <مصراع>تَمِيْمًا بِجَوْفِ الشَّاْمِ أَمْ مُتَسَاْكِرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١٨">فَهٰذَا إِنْشَاْدُ بَعْضِهِمْ</مقطع>
  <مقطع رقم="١١٩">وَأَكْثَرُهُمْ يَنْصِبُ الـ<حرف>سَّكْرَاْنَ</حرف>
  </مقطع>
  <مقطع رقم="١٢٠">وَيَرْفَعُ الْآخِرَ عَلَى قَطْعٍ وَاْبْتِدَاْءٍ</مقطع>
  <مقطع رقم="١٢١">وَإِذَا كَاْنَا مَعْرِفَةً فَأَنْتَ بِالْخِيَاْرِ</مقطع>
  <مقطع رقم="١٢٢">أَيُّهُمَا مَا جَعَلْتَهُ فَاْعِلًا رَفَعْتَهُ وَنَصَبْتَ الْآخَرَ</مقطع>
  <مقطع رقم="١٢٣">كَمَا فَعَلْتَ ذٰلِكَ فِي <حرف>ضَرَبَ</حرف>
  </مقطع>
  <مقطع رقم="١٢٤">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="١٢٥">
    <قول رقم="٣٠">كَاْنَ أَخُوْكَ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٢٦">وَ<قول رقم="٣١">كَاْنَ زَيْدٌ صَاْحِبَكَ</قول>
  </مقطع>
  <مقطع رقم="١٢٧">وَ<قول رقم="٣٢">كَاْنَ هٰذَا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٢٨">وَ<قول رقم="٣٣">كَاْنَ الْمُتَكَلِّمُ أَخَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٢٩">وَتَقُوْلُ <قول رقم="٣٤">مَنْ كَاْنَ أَخَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٣٠">وَ<قول رقم="٣٥">مَنْ كَاْنَ أَخُوْكَ</قول>
  </مقطع>
  <مقطع رقم="١٣١">كَمَا تَقُوْلُ <قول رقم="٣٦">مَنْ ضَرَبَ أَبَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٣٢">إِذَا جَعَلْتَ <حرف>مَنْ</حرف> الْفَاْعِلَ</مقطع>
  <مقطع رقم="١٣٣">وَ<قول رقم="٣٧">مَنْ ضَرَبَ أَبُوْكِ</قول>
  </مقطع>
  <مقطع رقم="١٣٤">إِذَا جَعَلْتَ الْـ<حرف>أَبَ</حرف> الْفَاْعِلَ</مقطع>
  <مقطع رقم="١٣٥">وَكَذٰلِكَ <قول رقم="٣٨">أَيُّهُمْ كَاْنَ أَخَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٣٦">وَ<قول رقم="٣٩">أَيَّهُمْ كَاْنَ أَخُوْكَ</قول>
  </مقطع>
  <مقطع رقم="١٣٧">وَتَقُوْلُ <قول رقم="٤٠">مَا كَاْنَ أَخَاْكَ إِلَّا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٣٨">كَقَوْلِكَ <قول رقم="٤١">مَا ضَرَبَ أَخَاْكَ إِلَّا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٣٩">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="١٤٠">
    <آية سورة="٤٥" آية="٢٥">مَا كَاْنَ حُجَّتَهُمْ إِلَّا أَنْ قَاْلُوْا</آية>
  </مقطع>
  <مقطع رقم="١٤١">وَ<آية سورة="٧" آية="٨٢">وَمَا كَاْنَ جَوَاْبَ قَوْمِهِ إِلَّا أَنْ قَاْلُوْا</آية>
  </مقطع>
  <مقطع رقم="١٤٢">وَقَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة مقطع="١٤٣" رقم="٨">
    <بيت>
      <مصراع>وَقَدْ عَلِمَ الْأَقْوَاْمُ مَا كَاْنَ دَاْئِهًا</مصراع>
      <مصراع>بِثَهْلَاْنَ إِلَّا الْخِزْيُ مِمَّنْ يَقُوْدُهًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٤٤">وَإِنْ شِئْتَ رَفَعْتَ الْأَوَّلَ</مقطع>
  <مقطع رقم="١٤٥">كَمَا تَقُوْلُ <قول رقم="٤٢">مَا ضَرَبَ أَخُوْكَ إِلَّا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٤٦">وَقَدْ قَرَأَ بَعْضُ الْقُرَّاْءِ مَا ذَكَرْنَا بِالرَّفْعِ</مقطع>
  <مقطع رقم="١٤٧">وَمِثْلُ قَوْلِهِمْ <قول رقم="٤٣">مَنْ كَاْنَ أَخَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٤٨">قَوْلُ الْعَرَبِ <قول رقم="٤٤">مَا جَاْءَتْ حَاْجَتَكَ</قول>
  </مقطع>
  <مقطع رقم="١٤٩">كَأَنَّهُ قَالَ <قول رقم="٤٥">مَا صَاْرَتْ حَاْجَتَكَ</قول>
  </مقطع>
  <مقطع رقم="١٥٠">وَلَكِنَّهُ أَدْخَلَ التَّأْنِيْثَ عَلَى <حرف>مًا</حرف> حَيْثُ كَاْنَتِ الْحَاْجَةَ</مقطع>
  <مقطع رقم="١٥١">كَمَا قَالَ بَعْضُ الْعَرَبِ <قول رقم="٤٦">مَنْ كَاْنَتْ أُمَّكَ</قول>
  </مقطع>
  <مقطع رقم="١٥٢">حَيْثُ أَوْقَعَ <حرف>مَنْ</حرف> عَلَى مُؤَنَّثٍ</مقطع>
  <مقطع رقم="١٥٣">وَإِنَّمَا صُيِّرَ <حرف>جَاْءَ</حرف> بِمَنْزِلَةِ <حرف>كَاْنَ</حرف>
  </مقطع>
  <مقطع رقم="١٥٤">فَِي هٰذَا الْحَرْفِ وَحْدَهُ</مقطع>
  <مقطع رقم="١٥٥">لِأَنَّهُ بِمَنْزِلَةِ الْمَثَلِ</مقطع>
  <مقطع رقم="١٥٦">كَمَا جَعَلُوا <حرف>عَسَى</حرف> بِمَنْزِلَةِ <حرف>كَاْنَ</حرف> فِي قَوْلِهِمْ <قول رقم="٤٧">عَسَى الْغُوَيْرُ أَبْؤُسًا</قول>
  </مقطع>
  <مقطع رقم="١٥٧">وَلَا يُقَاْلُ <قول رقم="٤٨">عَسَيْتَ أَخَاْنًا</قول>
  </مقطع>
  <مقطع رقم="١٥٨">وَكَمَا جَعَلُوْا <حرف>لَدُنْ</حرف> مَعَ <حرف>غُدْوَةً</حرف> مُنَوَّنَةً فِي قَوْلِهِمْ <قول رقم="٤٩">لَدُنْ غُدْوَةً</قول>
  </مقطع>
  <مقطع رقم="١٥٩">وَمِنْ كَلَاْمِهِمْ أَنْ يَجْعَلُوْا الشَّيْءَ فِي مَوْضِعٍ</مقطع>
  <مقطع رقم="١٦٠">عَلَى غَيْرِ حَاْلِهِ فِي سَاْئِرِ الْكَلَاْمِ</مقطع>
  <مقطع رقم="١٦١">وَسَتَرَى مِثْلَ ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٦٢">وَمَنْ يَقُوْلُ مِنَ الْعَرَبِ <قول رقم="٥٠">مَا جَاْءَتْ حَاْجَتُكَ</قول> كَثِيرٌ</مقطع>
  <مقطع رقم="١٦٣">كَمَا يَقُوْلُ <قول رقم="٥١">مَنْ كَاْنَتْ أُمُّكَ</قول>
  </مقطع>
  <مقطع رقم="١٦٤">وَلَمْ يَقُوْلُوْا <قول رقم="٥٢">مَا جَاْءَ حَاْجَتَكَ</قول>
  </مقطع>
  <مقطع رقم="١٦٥">كَمَا قَالُوْا <قول رقم="٥٣">مَنْ كَاْنَ أُمَّكَ</قول>
  </مقطع>
  <مقطع رقم="١٦٦">لِأَنَّهُ بِمَنْزِلَةِ الْمَثَلِ فَأَلْزَمُوْهُ التَّاْءَ</مقطع>
  <مقطع رقم="١٦٧">كَمَا اتَّفَقُوْا عَلَى <قول رقم="٥٤">لَعَمْرُ اللّٰهِ</قول> فَِي الْيَمِيْنِ</مقطع>
  <مقطع رقم="١٦٨">وَزَعَمَ يُوْنُسُ أَنَّهُ سَمِعَ رُؤْبَةُ يَقُوْلُ</مقطع>
  <مقطع رقم="١٦٩">
    <قول رقم="٥٥">مَا جَاْءَتْ حَاْجَتُكَ</قول>
  </مقطع>
  <مقطع رقم="١٧٠">فَيَرْفَعُ</مقطع>
  <مقطع رقم="١٧١">وَمِثْلُ قَوْلِهِمْ <حرف>مَا جَاْءَتْ حَاْجَتَكَ</حرف> إِذْ صَاْرَتْ تَقَعُ عَلَى مُؤَنَّثٍ</مقطع>
  <مقطع رقم="١٧٢">قَرَاْءَةُ بَعْضِ الْقُرَّاْءِ</مقطع>
  <مقطع رقم="١٧٣">
    <آية سورة="٦" آية="٢٣">ثُمَّ لَمْ تَكُنْ فِتْنَتُهُمْ إِلَّا أَنْ قَاْلُوْا</آية>
  </مقطع>
  <مقطع رقم="١٧٤">وَ<آية سورة="١٢" آية="١٠">تَلْتَقِطْهُ بَعْضُ السَّيَّاْرَةِ</آية>
  </مقطع>
  <مقطع رقم="١٧٥">وَرُبَّمَا قَاْلُوْا فِي بَعْضِ الْكَلَاْمِ</مقطع>
  <مقطع رقم="١٧٦">
    <قول رقم="٥٦">ذَهَبَتْ بَعْضُ أَصَاْبِعِهِ</قول>
  </مقطع>
  <مقطع رقم="١٧٧">وَإِنَّمَا أَنَّثَ الْـ<حرف>بَعْضَ</حرف> لِأَنَّهُ أَضَاْفَهُ إِلَى مُؤَنَّثٍ هُوَ مِنْهُ</مقطع>
  <مقطع رقم="١٧٨">وَلَوْ لَمْ يَكُنْ مِنْهُ لَمْ يُؤَنِّثْهُ</مقطع>
  <مقطع رقم="١٧٩">لِأَنَّهُ لَوْ قَالَ <قول رقم="٥٧">ذَهَبَتْ عَبْدُ أُمِّكَ</قول> لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="١٨٠">وَمِمَّا جَاْءَ مِثْلُهُ فِي الشِّعْرِ قَوْلُ الشَّاْعِرِ الْأَعْشَى</مقطع>
  <شاهدة مقطع="١٨١" رقم="٩">
    <بيت>
      <مصراع>وَتَشْرَقُ بِالْقَوْلِ الَّذِي قَدْ أَذَعْتَهُ</مصراع>
      <مصراع>كَمَا شَرِقَتْ صَدْرُ الْقَنَاْةِ مِنَ الدَّمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨٢">لِأَنَّ <حرف>صَدْرَ الْقَنَاْةِ</حرف> مِنْ مُؤَنَّثٍ</مقطع>
  <مقطع رقم="١٨٣">وَمِثْلُهُ قَوْلُ جَرِيْرٍ</مقطع>
  <شاهدة مقطع="١٨٤" رقم="١٠">
    <بيت>
      <مصراع>إِذَا بَعْضُ السِّنِيْنَ تَعَرَّقَتْنًا</مصراع>
      <مصراع>كَفَى الْأَيْتَاْمَ فَقْدَ أَبِي الْيَتِيْمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨٥">لِأَنَّ <حرف>بَعْضَ</حرف> هٰهُنَا سِنُوْنَ</مقطع>
  <مقطع رقم="١٨٦">وَمِثْلُهُ قَوْلُ جَرِيْرٍ أَيْضًا</مقطع>
  <شاهدة مقطع="١٨٧" رقم="١١">
    <بيت>
      <مصراع>لَمَّا أَتَى خَبَرُ الزُّبَيْرِ تَوَاْضَعَتْ</مصراع>
      <مصراع>سُوْرُ الْمَدِيْنَةِ وَالْجِبَاْلُ الْخُشَّعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨٨">وَمِثْلُهُ قَوْلِ ذِي الرُّمَّةِ</مقطع>
  <شاهدة مقطع="١٨٩" رقم="١٢">
    <بيت>
      <مصراع>مَشَيْنَ كَمَا اهْتَزَّتْ رِمَاْحٌ تَسَفَّهَتْ</مصراع>
      <مصراع>أَعَاْلِيَهَا مَرُّ الرِّيَاْحِ النَّوَاْسِمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٩٠">وَقَاْلَ الْعَجَّاْجُ</مقطع>
  <شاهدة مقطع="١٩١" رقم="١٣">
    <بيت>
      <مصراع>طُوْلُ اللَّيَاْلِي أَسْرَعَتْ فِي نَقْضِي</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٩٢">وَسَمِعْنَا مَنْ يُوْثَقُ بِهِ مِنَ الْعَرَبِ يَقُوْلُ</مقطع>
  <مقطع رقم="١٩٣">
    <قول رقم="٥٨">اجْتَمَعَتْ أَهْلُ الْيَمَاْمِةِ</قول>
  </مقطع>
  <مقطع رقم="١٩٤">لِأَنَّهُ يَقُوْلُ فِي كَلَامِهِ <قول رقم="٥٩">اجْتَمَعَتِ الْيَمَاْمَةُ</قول>
  </مقطع>
  <مقطع رقم="١٩٥">يَعْنِي <حرف>أَهْلَ الْيَمَاْمَةِ</حرف>
  </مقطع>
  <مقطع رقم="١٩٦">فَأَنَّثَ الْفِعْلَ فِي اللَّفْظِ إِذْ جَعَلَهُ فِي اللَّفْظِ لِلْيَمَامَةِ</مقطع>
  <مقطع رقم="١٩٧">فَتَرَكَ اللَّفْظَ يُكُوْنُ عَلَى مَا يَكُوْنُ عَلَيْهِ فَِي سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="١٩٨">وَمِثْلُهُ فِي هٰذَا <قول رقم="٦٠">يَا طَلْحَةَ أَقْبِلْ</قول>
  </مقطع>
  <مقطع رقم="١٩٩">لِأَنَّ أَكْثَرَ مَا يَدْعُو <حرف>طَلْحَةَ</حرف> بِالتَّرْخِيمِ</مقطع>
  <مقطع رقم="٢٠٠">فَتَرَكَ الْحَاْءَ عَلَى حَالِهًا</مقطع>
  <مقطع رقم="٢٠١">وَ<قول رقم="٦١">يَا تَيْمَ تَيْمَ عَدِيٍّ أَقْبِلْ</قول>
  </مقطع>
  <مقطع رقم="٢٠٢">وَقَالَ الشَّاْعِرُ جَرِيْرٍ</مقطع>
  <شاهدة مقطع="٢٠٣" رقم="١٤">
    <بيت>
      <مصراع>يَا تَيْمَ تَيْمَ عَدِيٍّ لَا أَبَا لَكُمُ</مصراع>
      <مصراع>لَا يُلْقِيَنَّكُمُ فِي سَوْءَةٍ عُمَرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٠٤">وَسَتَرَى هٰذَا مُبَيَّنًا فِي مَوَاْضِعِهِ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع رقم="٢٠٥">وَتَرْكُ التَّاْءِ فِي جَمِيْعِ هٰذَا الْحَدُّ وَالْوَجْهُ</مقطع>
  <مقطع رقم="٢٠٦">وَسَتَرَى مَا إِثْبَاْتُ التَّاْءِ فِيْهِ حَسَنٌ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع رقم="٢٠٧">مِنْ هٰذَا النَّحْوِ لِكَثْرَتِهِ فِي كَلَامِهِمْ</مقطع>
  <مقطع رقم="٢٠٨">وَسَيُبَيَّنُ فِي بَاْبِهِ</مقطع>
  <مقطع رقم="٢٠٩">فَإِنْ قُلْتُ <قول رقم="٦٢" ج="*">مَنْ ضَرَبَتْ عَبْدُ أُمِّكَ</قول>
  </مقطع>
  <مقطع رقم="٢١٠">أَوْ <قول ج="*" رقم="٦٣">هَذِهِ عَبْدُ زَيْنَبَ</قول>
  </مقطع>
  <مقطع رقم="٢١١">لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٢١٢">لِأَنَّهُ لَيْسَ مِنْهَا وَلَا بِهَا</مقطع>
  <مقطع رقم="٢١٣">وَلَا يَجُوْزُ أَنْ تَلْفِظَ بِهَا وَأَنْتَ تُرِيْدُ الْعَبْدَ</مقطع>
