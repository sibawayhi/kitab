<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤٧٥"
     درنبورج="١-٤٢٤"
     البكاء="٤-٢٩١"
     هارون="٣-١٥١"
     يعقوب="٣-١٧٣"
     رقم="٢٧٣">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ <حرف>أَنْ</حرف> وَ<حرف>إِنْ</حرف></مقطع>
  </عنوان>
  <مقطع رقم="٢">فَـ<حرف>أَنْ</حرف> مَفْتُوْحَةٌ تَكُوْنُ عَلَى وُجُوْهٍ</مقطع>
  <مقطع رقم="٣">فَأَحَدُهَا أَنْ تَكُوْنَ فِيْهِ <حرف>أَنْ</حرف> وَمَا تَعْمَلُ فِيْهِ مِنَ الْأَفْعَاْلِ بِمَنْزِلَةِ مَصَاْدِرِهَا</مقطع>
  <مقطع رقم="٤">وَالْآخَرُ أَنْ تَكُوْنَ فِيْهِ بِمَنْزِلَةِ <حرف>أَيْ</حرف>
  </مقطع>
  <مقطع رقم="٥">وَوَجْهٌ آخَرُ تَكُوْنُ فِيْهِ لَغْوًا</مقطع>
  <مقطع رقم="٦">وَوَجْهٌ آخَرُ هِيَ فِيْهِ مُخَفَّفَةً مَحْذُوْفَةً مِنَ الثَّقِيْلَةِ</مقطع>
  <مقطع رقم="٧">فَأَمَّا الْوَجْهُ الَّذِي تَكُوْنُ فِيْهِ لَغْوًا فَنَحْوُ قَوْلِكَ</مقطع>
  <مقطع رقم="٨">
    <قول رقم="١">لَمَّا أَنْ جَاءُوْا [ذَهَبْتَ]</قول>
  </مقطع>
  <مقطع رقم="٩">وَ<قول رقم="٢">أَمَّا وَاللّٰهِ أَنْ لَوْ فَعَلْتَ لَأَكْرَمْتُكَ</قول>
  </مقطع>
  <مقطع رقم="١٠">وَأَمَّا <حرف>إِنْ</حرف> فَتَكُوْنُ لِلْمُجَازَاةِ</مقطع>
  <مقطع رقم="١١">وَتَكُوْنُ أَنْ يُبْتَدَأَ مَا بَعْدَهَا فِي مَعْنَى الْيَمِيْنِ وَفِي الْيَمِيْنِ</مقطع>
  <مقطع رقم="١٢">كَمَا قَاْلَ اللّٰهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="١٣">
    <آية سورة="٨٦" آية="٤">إِنْ كُلُّ نَفْسٍ لَّمَّا عَلَيْهَا حَافِظٌ <نهاية آية="٤"/>
    </آية>
  </مقطع>
  <مقطع رقم="١٤">
    <آية سورة="٣٦" آية="٣٢">وَإِنْ كُلٌّ لَّمَّا جَمِيْعٌ لَّدَيْنَا مُحْضَرُوْنَ <نهاية آية="٣٢"/>
    </آية>
  </مقطع>
  <مقطع رقم="١٥">وَحَدَّثَنِي مَنْ لَا أَتَّهِمُ عَنْ رَجُلٍ مِنْ أَهْلِ الْمَدِيْنَةِ مَوْثُوْقٌ بِهِ</مقطع>
  <مقطع رقم="١٦">أَنَّهُ سَمِعَ عَرَبِيًّا يَتَكَلَّمُ بِمِثْلِ قَوْلِكَ <قول رقم="٣">إِنْ زَيْدٌ لَذَاْهِبٌ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَهِيَ الَّتِي فِي قَوْلِهِ جَلَّ ذِكْرُهُ</مقطع>
  <مقطع رقم="١٨">
    <آية سورة="٣٧" آية="١٦٧">وَإِنْ كَاْنُوْا لَيَقُوْلُوْنَ <نهاية آية="١٦٧"/>لَوْ أَنَّ عِنْدَنَا ذِكْرًا مِنَ الْأَوَّلِيْنَ <نهاية آية="١٦٧"/>
    </آية>
  </مقطع>
  <مقطع رقم="١٩">وَهٰذِهِ <حرف>إِنَّ</حرف> مَحْذُوْفَةٌ</مقطع>
  <مقطع رقم="٢٠">وَتَكُوْنُ فِي مَعْنَى <حرف>مَا</حرف>
  </مقطع>
  <مقطع رقم="٢١">قَاْلَ اللّٰهُ تَبَاْرَكَ وَتَعَاْلَى <!-- عَزَّ وَجَلَّ --> <آية سورة="٦٧" آية="٢٠">إِنِ الْكَاْفِرُوْنَ إِلَّا فِي غُرُوْرٍ</آية>
  </مقطع>
  <مقطع رقم="٢٢">أَيْ <قول رقم="٤">مَا الْكَاْفِرُوْنَ إِلَّا فِي غُرُوْرٍ</قول>
  </مقطع>
  <مقطع رقم="٢٣">وَتَصْرِفُ <حرف>مَا</حرف> الْكَلَاْمَ إِلَى الِابْتِدَاْءِ</مقطع>
  <مقطع رقم="٢٤">كَمَا صَرَفْتَهَا <حرف>مَا</حرف> إِلَى الِابْتِدَاْءِ فِي قَوْلِكَ <حرف>إِنَّمَا</حرف>
  </مقطع>
  <مقطع رقم="٢٥">وَذٰلِكَ قَوْلُكَ <قول رقم="٥">مَا إِنْ زَيْدٌ ذَاْهِبٌ</قول>
  </مقطع>
  <مقطع رقم="٢٦">وَقَاْلَ الشَّاْعِرُ [فَرْوَةُ بْنُ مُسَيْكٍ ]</مقطع>
  <شاهدة مقطع="٢٧" رقم="١">
    <بيت>
      <مصراع>وَمَا إنْ طِبُّنَا جُبْنٌ وَلٰكِنْ</مصراع>
      <مصراع>مَنَاْيَاْنَا وَدَوْلَةُ آخِريِْنَا</مصراع>
    </بيت>
  </شاهدة>
