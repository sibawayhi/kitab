<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤٧٥"
     درنبورج="١-٤٢٤"
     البكاء="٤-٢٩١"
     هارون="٣-١٥١"
     يعقوب="٣-١٧٣"
     رقم="٢٧٣">
  <عنوان>
    <مقطع هوية='٦٦٥٢٥'>هٰذَا بَاْبُ <حرف>أَنْ</حرف> وَ<حرف>إِنْ</حرف></مقطع>
  </عنوان>
  <مقطع هوية='٤٧٢٥٠'>فَـ<حرف>أَنْ</حرف> مَفْتُوْحَةٌ تَكُوْنُ عَلَى وُجُوْهٍ</مقطع>
  <مقطع هوية='٠١٠٢٢'>فَأَحَدُهَا أَنْ تَكُوْنَ فِيْهِ <حرف>أَنْ</حرف> وَمَا تَعْمَلُ فِيْهِ مِنَ الْأَفْعَاْلِ بِمَنْزِلَةِ مَصَاْدِرِهَا</مقطع>
  <مقطع هوية='٠٣٣٢٣'>وَالْآخَرُ أَنْ تَكُوْنَ فِيْهِ بِمَنْزِلَةِ <حرف>أَيْ</حرف>
  </مقطع>
  <مقطع هوية='٥٢٧٤٥'>وَوَجْهٌ آخَرُ تَكُوْنُ فِيْهِ لَغْوًا</مقطع>
  <مقطع هوية='٥٣٧٧٦'>وَوَجْهٌ آخَرُ هِيَ فِيْهِ مُخَفَّفَةً مَحْذُوْفَةً مِنَ الثَّقِيْلَةِ</مقطع>
  <مقطع هوية='٨٥٥٣٦'>فَأَمَّا الْوَجْهُ الَّذِي تَكُوْنُ فِيْهِ لَغْوًا فَنَحْوُ قَوْلِكَ</مقطع>
  <مقطع هوية='٣٦٣٩٨'>
    <قول هوية='١٦٧٢٠'>لَمَّا أَنْ جَاْءُوْا [ذَهَبْتَ]</قول>
  </مقطع>
  <مقطع هوية='١٤٦٦٦'>وَ<قول هوية='٠٣٢٥٩'>أَمَّا وَاللهِ أَنْ لَوْ فَعَلْتَ لَأَكْرَمْتُكَ</قول>
  </مقطع>
  <مقطع هوية='٧٧٥٤٧'>وَأَمَّا <حرف>إِنْ</حرف> فَتَكُوْنُ لِلْمُجَاْزَاْةِ</مقطع>
  <مقطع هوية='١١٠٢٢'>وَتَكُوْنُ أَنْ يُبْتَدَأَ مَا بَعْدَهَا فِي مَعْنَى الْيَمِيْنِ وَفِي الْيَمِيْنِ</مقطع>
  <مقطع هوية='٤٠٥٦٨'>كَمَا قَاْلَ اللهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='٦٢٢٩٠'>
    <آية هوية='٣٩٣٦١' سورة="٨٦" آية="٤">إِنْ كُلُّ نَفْسٍ لَّمَّا عَلَيْهَا حَاْفِظٌ <نهاية آية="٤"/>
    </آية>
  </مقطع>
  <مقطع هوية='٨٧٣٦٢'>
    <آية هوية='٨٤٧٥٦' سورة="٣٦" آية="٣٢">وَإِنْ كُلٌّ لَّمَّا جَمِيْعٌ لَّدَيْنَا مُحْضَرُوْنَ <نهاية آية="٣٢"/>
    </آية>
  </مقطع>
  <مقطع هوية='٨٨٦٣٧'>وَحَدَّثَنِي مَنْ لَا أَتَّهِمُ عَنْ رَجُلٍ مِنْ أَهْلِ الْمَدِيْنَةِ مَوْثُوْقٌ بِهِ</مقطع>
  <مقطع هوية='٣٨٧٥٣'>أَنَّهُ سَمِعَ عَرَبِيًّا يَتَكَلَّمُ بِمِثْلِ قَوْلِكَ <قول هوية='٧٧٠٣٠'>إِنْ زَيْدٌ لَذَاْهِبٌ</قول>
  </مقطع>
  <مقطع هوية='٨١٢٢٥'>وَهِيَ الَّتِي فِي قَوْلِهِ جَلَّ ذِكْرُهُ</مقطع>
  <مقطع هوية='٨٨٠٦٥'>
    <آية هوية='١٩٨٠٢' سورة="٣٧" آية="١٦٧">وَإِنْ كَاْنُوْا لَيَقُوْلُوْنَ <نهاية آية="١٦٧"/> لَوْ أَنَّ عِنْدَنَا ذِكْرًا مِنَ الْأَوَّلِيْنَ <نهاية آية="١٦٨"/>
    </آية>
  </مقطع>
  <مقطع هوية='٧٣٩٥٤'>وَهٰذِهِ <حرف>إِنَّ</حرف> مَحْذُوْفَةٌ</مقطع>
  <مقطع هوية='١١٣٨٥'>وَتَكُوْنُ بِمَنْزِلَةِ <!-- فِي مَعْنَى --> <حرف>مَا</حرف>
  </مقطع>
  <مقطع هوية='١٨١٠١'>قَاْلَ اللهُ تَبَاْرَكَ وَتَعَاْلَى <!-- عَزَّ وَجَلَّ --> <آية هوية='٩٧٧٤١' سورة="٦٧" آية="٢٠">إِنِ الْكَاْفِرُوْنَ إِلَّا فِي غُرُوْرٍ</آية>
  </مقطع>
  <مقطع هوية='٨٢٧١٥'>أَيْ <قول هوية='٦١٠٧٩'>مَا الْكَاْفِرُوْنَ إِلَّا فِي غُرُوْرٍ</قول>
  </مقطع>
  <مقطع هوية='٨١٨٩٩'>وَتَصْرِفُ <حرف>مَا</حرف> الْكَلَاْمَ إِلَى الِاْبْتِدَاْءِ</مقطع>
  <مقطع هوية='٩٢٨٥٤'>كَمَا صَرَفَتْهَا <حرف>مَا</حرف> إِلَى الِاْبْتِدَاْءِ فِي قَوْلِكَ <حرف>إِنَّمَا</حرف>
  </مقطع>
  <مقطع هوية='٤٧٤٥٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='٨٦٧٩٩'>مَا إِنْ زَيْدٌ ذَاْهِبٌ</قول>
  </مقطع>
  <مقطع هوية='٢٠١٤٢'>وَقَاْلَ <!-- الشَّاْعِرُ --> <شاعر>فَرْوَةُ بْنُ مُسَيْكٍ</شاعر></مقطع>
  <شاهدة هوية='١٣٧٣٤' شاعر="فَرْوَةُ بْنُ مُسَيْكٍ">
    <بيت>
      <مصراع>وَ<ثبات>مَا إِنْ</ثبات> طِبُّنَا جُبْنٌ وَلٰكِنْ</مصراع>
      <مصراع>مَنَاْيَاْنَا وَدَوْلَةُ آخِريِْنَا</مصراع>
    </بيت>
  </شاهدة>
