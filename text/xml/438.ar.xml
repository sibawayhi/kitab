<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٢٢٧"
     درنبورج="٢-٢٤٠"
     البكاء="٥-٣٥٧"
     هارون="٤-٤٠"
     يعقوب="٤-١٥١"
     رقم="٤٣٨">

  <التحرير>
    <تشكيل  نسخة="1" نسبة="0"/>
    <تقطيع  نسخة="1"/>
    <أقوال  نسخة="1" نسبة="0"/>
    <شواهد  نسخة="1" نسبة="0"/>
  </التحرير>

  <عنوان>
    <مقطع>هذا باب ما جاء من المصادر وفيه ألف التأنيث</مقطع>
  </عنوان>
  <مقطع>وذلك قولك رجعته رجعى وبشرته بشرى وذكرته ذكرى واشتكيت شكوى وأفتيته فتيا وأعداه عدوى والبقيا</مقطع>
  <مقطع>فأما الحذيا فالعطية والسقيا ما سقيت وأما الدعوى فهو ما ادعيت</مقطع>
  <مقطع>وقال بعض العرب اللهم أشركنا في دعوى المسلمين<هارون مجلد="٤" صفحة="٤٠"/>وقال سبحانه وتعالى ﴿ وآخر دعواهم أن الحمد لله رب العالمين ﴾ وقال بشير بن النكث</مقطع>
  <شاهدة>
    <بيت>
      <مصراع>ولت ودعواها كثير صخبة</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع>فدخلت الألف كدخول الهاء في المصادر وقالوا الكبرياء للكبر وأما الفعيلي فتجيء على وجه آخر تقول كان بينهم رميا فليس يريد قوله رميا ولكنه يريد ما كان بينهم من الترامي وكثرة الرمي ولا يكون الرميا واحداً وكذلك الحجيزي</مقطع>
  <مقطع>وأما الحثيثي فكثرة الحث كما أن الرميا كثرة الرمي ولا يكون من واحد</مقطع>
  <مقطع>وأما الدليلي فإنما يراد به كثرة علمه بالدلالة ورسوخه فيها وكذلك القتيتي والهجيري كثرة الكلام والقول بالشيء</مقطع>
  <مقطع>والخليفي كثرة تشاغله بالخلافة وامتداد أيامه فيها</مقطع>
  <هارون مجلد="٤" صفحة="٤١"/>
</باب>
