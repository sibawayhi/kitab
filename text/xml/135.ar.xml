<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٧٩"
     درنبورج="١-٢٤٠"
     هارون="٢-١٣٠"
     يعقوب="٢-١٢٩"
     البكاء="٢-٢١٨"
     رقم="١٣٥">

    <عنوان>
      <مقطع هوية='٧٨٤٢٢'>هٰذَا بَاْبٌ يَكُوْنُ الْمُبْتَدَأُ فِيْهِ مُضْمَرًا</مقطع>
      <مقطع هوية='٩٣٢٧٣'>وَيَكُوْنُ الْمَبْنِيُّ عَلَيْهِ مُظْهَرًا</مقطع>
   </عنوان>
   <مقطع هوية='٧٣٠٣٦'>وَذٰلِكَ أَنَّكَ رَأَيْتَ صُوْرَةَ شَخْصٍ</مقطع>
   <مقطع هوية='٧٤٨٤٣'>فَصَاْرَ آيَةً لَكَ عَلَى مَعْرِفَةِ الشَّخْصِ</مقطع>
    <مقطع هوية='١٣٦٤٠'>فَقُلْتَ <قول هوية='٦٤٧٩٥'>عَبْدُ اللهِ وَرَبِّي</قول>
   </مقطع>
    <مقطع هوية='٧٢٠٥٢'>كَأَنَّكَ قُلْتَ <قول هوية='٥٤١٨٦'>ذَاْكَ عَبْدُ اللهِ</قول> أَوْ <قول هوية='٦٩٦٨٦'>هٰذَا عَبْدُ اللهِ</قول>
   </مقطع>
   <مقطع هوية='٢٢٦٤٦'>أَوْ سَمِعْتَ صَوْتًا فَعَرَفْتَ صَاْحِبَ الصَّوْتِ</مقطع>
   <مقطع هوية='٦٣٣٣٤'>فَصَاْرَ آيَةً لَكَ عَلَى مَعْرِفَتِهِ</مقطع>
    <مقطع هوية='٧٢٧٠٤'>فَقُلْتَ <قول هوية='٥٦١٣٩'>زَيْدٌ وَرَبِّي</قول>
   </مقطع>
    <مقطع هوية='٥٤١١٤'>أَوْ مَسَسْتَ جَسَدًا أَوْ شَمَمْتَ رِيْحًا</مقطع>
    <مقطع هوية='٩٩٧٤٩'>فَقُلْتَ <قول هوية='١٦٤٦٨'>زَيْدٌ</قول> أَوْ <قول هوية='٩٥٢٢٠'>الْمِسْكُ</قول>
   </مقطع>
   <مقطع هوية='١٧٠٣١'>أَوْ ذُقْتَ طَعَاْمًا</مقطع>
   <مقطع هوية='٧٠٤٥٠'>فَقُلْتَ <قول هوية='٩٣٦٤٠'>الْعَسَلُ</قول>
   </مقطع>
   <مقطع هوية='٠٩٨٣١'>وَلَوْ حُدِّثْتَ عَنْ شَمَاْئِلِ رَجُلٍ</مقطع>
   <مقطع هوية=''>فَصَاْرَ آيَةً لَكَ عَلَى مَعْرِفَتِهِ</مقطع>
    <مقطع هوية='٤٦٦٠٧'>لَقُلْتَ <قول هوية='٦٣٨١٩'>عَبْدُ اللهِ</قول>
   </مقطع>
    <مقطع هوية='٢٤٧٨٦'>كَأَنَّ رَجُلًا قَاْلَ <قول هوية='٣٧٣٨٨'>مَرَرْتُ بِرَجُلٍ رَاْحِمٍ لِلْمَسَاْكِيْنِ بَاْرٍّ بِوَاْلِدَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٨٢٢٠٦'>فَقُلْتَ <قول هوية='٣١٩٣١'>فُلَاْنٌ وَاللهِ</قول>
   </مقطع>

