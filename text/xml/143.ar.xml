    <عنوان>
       <مقطع هوية='٥٩٢٥١'>هٰذَا بَاْبُ مَا يَنْصِبُ نَصْبَ  <حرف>كَمْ</حرف>  إِذَا كَاْنَتْ مُنَوَّنَةً فِي الْخَبَرِ وَالِاسْتِفْهَاْمِ</مقطع>
   </عنوان>
    <مقطع هوية='٦٣٣٢٠'>وَذٰلِكَ مَا كَاْنَ مِنَ الْمَقَاْدِيْرُ</مقطع>
    <مقطع هوية='٨٧٠٨١'>وَذٰلِكَ قَوْلُكَ <قول هوية='٣٤١٨٩'>مَا فِي السَّمَاْءِ مَوْضِعُ كَفٍّ سَحَاْبًا</قول>
   </مقطع>
    <مقطع هوية='٥٨٩٩٤'>وَ<قول هوية='٨٥٨٨١'>لِي مِثْلُهُ عَبْدًا</قول></مقطع>
    <مقطع هوية='٩٠٥٩٩'>وَ<قول هوية='٥١٥٥٥'>مَا فِي النَّاْسِ مِثْلُهُ فَاْرِسًا</قول>
   </مقطع>
    <مقطع هوية='١١٢٧١'>وَ<قول هوية='٥٣٠٤٧'>عَلَيْهَا مِثْلُهَا زُبْدًا</قول>
   </مقطع>
    <مقطع هوية='٤٠٥٨٠'>وَذٰلِكَ أَنَّكَ أَرَدْتَ أَنْ تَقُوْلَ <قول هوية='٨٨٧١٣'>لِي مِثْلُهُ مِنَ الْعَبِيْدِ</قول>
   </مقطع>
    <مقطع هوية='٦٤٧٨٣'>وَ<قول هوية='٠٤٩٣٣'>لِي مِلْؤُهُ مِنَ الْعَسَلِ</قول>
   </مقطع>
    <مقطع هوية='٣٩٥٨٣'>و<قول هوية='١٩٧٠٩'>مَا فِي السَّمَاْءِ مَوْضِعُ كَفٍّ مِنَ السَّحَاْبِ</قول>
   </مقطع>
   <مقطع هوية='٣٠٠٧١'>فَحَذَفَ ذٰلِكَ تَخْفِيْفًا</مقطع>
   <مقطع هوية='٨٠٢٨٩'>كَمَا حَذَفَهُ مِنْ  <حرف>عِشْرِيْنَ</حرف>  حِيْنَ قَاْلَ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف></مقطع>
    <مقطع هوية='١٥٥٧٢'>وَصَاْرَتْ الْأَسْمَاْءُ الْمُضَاْفُ إِلَيْهِا الْمَجْرُوْرَةُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
    <مقطع هوية='٢٧٢٦٠'>وَلَمْ يَكُنْ مَا بَعْدَهَا مِنْ صِفَتِهَا</مقطع>
    <مقطع هوية='٨٣٦٦٢'>وَلَا مَحْمُوْلًا عَلَى مَا حُمِلَتْ عَلَيْهِ</مقطع>
    <مقطع هوية='٤٩١٦٦'>فَاْنْتَصَبَ بِـ<حرف>مِلْءِ كَفٍّ</حرف>  وَ<حرف>مِثْلِهِ</حرف></مقطع>
    <مقطع هوية='٤٩٤١٦'>كَمَا انْتَصَبَ الـ<حرف>دِّرْهَمُ</حرف>  بِـ<حرف>الْعِشْرِيْنَ</حرف></مقطع>
    <مقطع هوية='٧٩٧٤٣'>لِأنَّ  <حرف>مِثْلَ</حرف>  بِمَنْزِلَةِ  <حرف>عِشْرِيْنَ</حرف></مقطع>
    <مقطع هوية='٨٦٧٠٩'>وَالْمَجْرُوْرُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
    <مقطع هوية='٩٧١٥٨'>لِأَنَّهُ قَدْ مَنَعَ الْإِضَاْفَةَ كَمَا مَنَعَ التَّنْوِيْنَ</مقطع>
    <مقطع هوية='٦٨١٣٢'>وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللهُ أَنَّ الْمَجْرُوْرَ بَدَلٌ مِنَ التَّنْوِيْنِ</مقطع>
    <مقطع هوية='٣٦١٢٦'>وَمَعَ ذٰلِكَ أَنَّكَ إِذَا قُلْتَ <حرف>لِي مِثْلُهُ</حرف> فَقَدْ أَبْهَمْتَ</مقطع>
    <مقطع هوية='٦٢٧٥١'>كَمَا أَنَّكَ إِذَا قُلْتَ <حرف>لِي عِشْرُوْنَ</حرف> فَقَدْ أَبْهَمْتَ الْأَنْوَاْعَ</مقطع>
    <مقطع هوية='٧٤٣٤٢'>فَإِذَا قُلْتَ <حرف>دِرْهَمًا</حرف> فَقَدِ اخْتَصَصْتَ نَوْعًا</مقطع>
    <مقطع هوية='٩٠٧٧٦'>وَبِهِ يُعْرَفُ مِنْ أَيِّ نَوْعٍ ذٰلِكَ الْعَدَدُ</مقطع>
    <مقطع هوية='٥١٦٦٩'>فَكَذٰلِكَ <حرف>مِثْلُهُ</حرف> هُوَ مُبْهَمٌ يَقَعُ عَلَى أَنْوَاْعٍ</مقطع>
    <مقطع هوية='٢٩٦١٠'>عَلَى الشُّجَاْعَةِ وَالْفُرُوْسَةِ وَالْعَبِيْدِ</مقطع>
    <مقطع هوية='٤٤٧٧٢'>فَإِذَا قَاْلَ <حرف>عَبْدًا</حرف> فَقَدْ بَيَّنَ مِنْ أَيِّ أَنْوَاْعٍ الْمِثْلُ</مقطع>
    <مقطع هوية='٩٢٦٧٠'>وَالْـ<حرف>عَبْدُ</حرف>  ضَرْبٌ مِنَ الضُّرُوْبِ الَّتِي تَكُوْنُ عَلَى مِقْدَاْرِ الْمِثْلِ</مقطع>
    <مقطع هوية='٨٠٩١٣'>فَاْسْتَخْرَجَ عَلَى الْمِقْدَاْرِ نَوْعًا</مقطع>
    <مقطع هوية='٥٨٦٤٩'>وَالنَّوْعُ هُوَ الْمِثْلُ وَلٰكِنَّهُ لَيْسَ مِنِ اسْمِهِ</مقطع>
    <مقطع هوية='٣٥١٩٣'>وَالـ<حرف>دِّرْهَمُ</حرف>  لَيْسَ مِنَ الْـ<حرف>عِشْرِيْنَ</حرف> وِلَا مِنِ اسْمِهِ</مقطع>
    <مقطع هوية='٩٧٨٧٧'>وَلٰكِنَّهُ يَنْصِبُ كَمَا تَنْصِبُ الْـ<حرف>عِشْرُوْنَ</حرف></مقطع>
    <مقطع هوية='٨٢٤٦٨'>وَيُحْذَفُ مِنَ النَّوْعِ كَمَا يُحْذَفُ مِنْ نَوْعِ الْـ<حرف>عِشْرِيْنَ</حرف></مقطع>
    <مقطع هوية='١٨٧٥١'>وَالْمَعْنَى مُخْتَلِفٌ</مقطع>
    <مقطع هوية='٧٢٢٢٨'>وَمِثْلُ ذٰلِكَ <قول هوية='٣٥٦٢٠'>عَلَيْهِ شَعْرُ كَلْبَيْنِ دَيْنًا</قول></مقطع>
    <مقطع هوية='٧٨٢٧٣'>الشَّعْرُ مِقْدَاْرٌ</مقطع>
    <مقطع هوية='٢١٨١٧'>وَكَذٰلِكَ <قول هوية='٢٠٤٥٤'>لِي مِلْءُ الدَّاْرِ خَيْرًا مِنْكَ</قول></مقطع>
    <مقطع هوية='٩٩٠٢٨'>وَ<قول هوية='٨٩٧٤٧'>لِي خَيْرٌ مِنْكَ عَبْدًا</قول></مقطع>
    <مقطع هوية='١٦٧٤٣'>وَ<قول هوية='١٦٣١٩'>لِي مِلْءُ الدَّاْرِ أَمْثَاْلَكَ</قول></مقطع>
    <مقطع هوية='٤٣٩١٤'>لِأنَّ  <حرف>خَيْرًا مِنْكَ</حرف>  نَكِرَةٌ وَ<حرف>أَمْثَاْلَكَ</حرف> نَكِرَةٌ</مقطع>

    <مقطع هوية='٣٥٨٥٥'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='٨٩١٠٤'>لِي مِلْءُ الدَّاْرِ رَجُلًا</قول> وَأَنْتَ تُرِيْدُ جَمِيْعًا</مقطع>
    <مقطع هوية='٤١٨٣٦'>فَيَجُوْزُ ذٰلِكَ وَيَكُوْنُ كَمَنْزِلَتِهِ فِي  <حرف>كَمْ</حرف>  وَ<حرف>عِشْرِيْنَ</حرف></مقطع>
    <مقطع هوية='٨٩١١٥'>وَإِنْ شِئْتَ قُلْتَ <حرف>رِجَاْلًا</حرف> فَجَاْزَ عِنْدَهُ</مقطع>
    <مقطع هوية='٤١٥٦٤'>كَمَا جَاْزَ عِنْدَهُ فِي <حرف>كَمْ</حرف> حِيْنَ دَخَلَ فِيْهَا مَعْنَى <حرف>رُبَّ</حرف></مقطع>
    <مقطع هوية='٣٤٩٠٠'>لِأنَّ الْمَقْدَاْرَ مَعْنَاْهُ مُخَاْلِفٌ لِمَعْنَى <حرف>كَمْ</حرف> فِي الِاسْتِفْهَاْمِ</مقطع>
    <مقطع هوية='٣٩٧٥٣'>فَجَاْزَ فِي تَفْسِيْرِهِ الْوَاْحِدُ وَالجَمِيْعُ</مقطع>
    <مقطع هوية='٤٨٧٤١'>كَمَا جَاْزَ فِي <حرف>كَمْ</حرف> إِذ دَخَلَهَا مَعْنَى <حرف>رُبَّ</حرف></مقطع>
    <مقطع هوية='٢٧٤٦١'>كَمَا تَقُوْلُ <حرف>ثَلاْثَةٌ أَبْوَاْبًا</حرف> أَيْ مِنْ ذَا الَجِنْسِ</مقطع>
    <مقطع هوية='٩٥٢٠٨'>تَجْعَلُهُ بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
    <مقطع هوية='٠١٨٢١'>ومِثْلُ ذٰلِكَ <قول هوية='٥٦٣٩٠'>لَا كَزَيْدٍ فَاْرِسًا</قول></مقطع>
    <مقطع هوية='١٧٣٠٢'>إِذَا كَاْنَ الْـ<حرف>فِاْرِسُ</حرف> هُوَ الَّذِي سَمَّيْتَهُ</مقطع>
    <مقطع هوية='٠٦٧٣٢'>كَأَنَّكَ قُلْتَ <قول هوية='٤١٩٣٨'>لَا فَاْرِسَ كَزَيْدٍ فَاْرِسٍا</قول></مقطع>
    <مقطع هوية='٩٠٣٨٥'>وَقَاْلَ كَعْبُ بْنُ جُعَيْلٍ</مقطع>
    <شاهدة هوية='٦٩٢٦٣'>
       <بيت>
          <مصراع>لَنَا مِرْفَدٌ سَبْعُوْنَ أَلْفَ مُدَجَّجٍ</مصراع>
          <مصراع>فَهَلْ فِي مَعَدٍّ فَوْقَ ذٰلِكَ مِرْفَدَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٢٨٨٧٩'>[ كَأَنَّهُ قَاْلَ <قول هوية='٦٢٦٠٠'>فَهَلْ فِي مَعَدٍّ مِرْفَدٌ فَوْقَ ذٰلِكَ مِرْفَدًا</قول>]</مقطع>
    <مقطع هوية='٠٦٤٢٦'>وَمِثْلُ ذٰلِكَ <قول هوية='٦٠٥٦١'>تَاْللّٰهِ رَجُلًا</قول>
   </مقطع>
   <مقطع هوية='٧١٣٥٣'>كَأَنَّهُ أَضْمَرَ <قول هوية='٧٤٧٠٨'>تَاْللّٰهِ مَا رَأَيْتُ كَاْلْيَوْمِ رَجُلًا</قول></مقطع>
  <مقطع هوية='٥٣٤٨٦'>وَ<قول هوية='٢٤٧٤٧'>مَا رَأَيْتُ مِثْلَهُ رَجُلًا</قول>
   </مقطع>

