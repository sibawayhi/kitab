    <عنوان>
       <مقطع هوية='٢٦٥٠١'>هٰذَا بَاْبُ مَا يَكُوْنُ مِنَ الْمَصَاْدِرِ مَفْعُوْلًا</مقطع>
   </عنوان>
    <مقطع هوية='٠٠٢٣١'>فَيَرْتَفِعُ [كَمَا يَنْتَصِبُ] إِذَا شَغَلْتَ الْفِعْلَ بِهِ</مقطع>
    <مقطع هوية='٠٤٨٢١'>وَيَنْتَصِبُ إِذَا شَغَلْتَ الْفِعْلَ بِغَيْرِهِ</مقطع>
    <مقطع هوية='٨٢٠٠٠'>وَإِنَّمَا يَجِئُ ذٰلِكَ عَلَى أَنْ تُبَيِّنَ أَىَّ فِعْلٍ فَعَلْتَ أَوْ تَوْكِيْدًا</مقطع>
    <مقطع هوية='٥٤٣١٨'>فَمِنْ ذٰلِكَ قَوْلُكَ عَلَى قَوْلِ السَّاْئِلِ <قول هوية='٥٧٧٧٦'>أَىَّ سَيْرٍ سِيْرَ عَلَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٧١٧٥٧'>فَتَقُوْلُ <قول هوية='٧٥٣١٦'>سِيْرَ عَلَيْهِ سَيْرٌ شَدِيْدٌ</قول> وَ<قول هوية='٨٦٧٨٣'>ضُرِبَ بِهِ ضَرْبٌ ضَعِيْفٌ</قول>
   </مقطع>
    <مقطع هوية='٥٣١٩٥'>فَأَجْرَيْتَهُ مَفْعُوْلًا وَالْفِعْلُ لَهُ</مقطع>
    <مقطع هوية='٧٥٣١٩'>فَإِنْ قُلْتَ <قول هوية='٤٠٣٨٠'>ضُرِبَ بِهِ ضَرْبًا ضَعِيْفًا</قول> فَقَدْ شَغَلْتَ الْفِعْلَ بِغَيْرِهِ عَنْهُ</مقطع>
    <مقطع هوية='٧٩١٥٨'>وَمِثْلُهُ <قول هوية='٨٨٥٧١'>سِيْرَ عَلَيْهِ سَيْرًا شَدِيْدًا</قول>
   </مقطع>
    <مقطع هوية='٧١٤١٠'>وَكَذٰلِكَ إِنْ أَرَدْتَ هٰذَا الْمَعْنَى وَلَمْ تَذْكُرْ الصِّفَّةَ تَقُوْلُ <قول هوية='٣٧٠٠١'>سِيْرَ عَلَيْهِ سَيْرٌ</قول> وَ<قول هوية='٣٨١١٨'>ضُرِبَ بِهِ ضَرْبٌ</قول>
   </مقطع>
    <مقطع هوية='٠٥٦٦٩'>كَأَنَّكَ قُلْتَ <قول هوية='٤٠٩٢٧'>سِيْرَ عَلَيْهِ ضَرْبٌ مِنَ السَّيْرِ</قول> أو <قول هوية='٢٣٣٩٩'>سِيْرَ عَلَيْهِ شَيْءٌ مِنَ السَّيْرِ</قول>
   </مقطع>
    <مقطع هوية='٥٧١٥٣'>وَكَذٰلِكَ جَمِيْعُ الْمَصَاْدِرِ تَرْتَفِعُ عَلَى أَفْعَاْلِهَا إِذَا لَمْ تَشْغَلِ الْفِعْلَ بِغَيْرِهَا</مقطع>
    <مقطع هوية='٠٨٢٩٨'>وَتَقُوْلُ <قول هوية='٠٠١٨١'>سِيْرَ عَلَيْهِ أَيُّمَا سَيْرٍ سَيْرًا شَدِيْدًا</قول>
   </مقطع>
    <مقطع هوية='١٦٩٤٧'>كَأَنَّكَ قُلْتَ <قول هوية='٠٦٠١٧'>سِيْرَ عَلَيْهِ بَعِيْرُكَ سَيْرًا شَدِيْدًا</قول>
   </مقطع>
    <مقطع هوية='١١٣١٣'>وَتَقُوْلُ <قول هوية='٦٥٥٨٣'>سِيْرَ عَلَيْهِ سَيْرَتَاْنِ أَيَّمَا سَيْرٍ</قول>
   </مقطع>
    <مقطع هوية='٢٦٠٩٠'>كَأَنَّكَ قُلْتَ <قول هوية='٩٣٠٤٥'>سِيْرَ عَلَيْهِ بَعِيْرُكَ أَيَّمَا سَيْرٍ</قول>
   </مقطع>
    <مقطع هوية='٢٢٢٢٩'>فَجَرَى مَجْرَى <قول هوية='٧٩٥٤٢'>ضُرِبَ زَيْدٌ أَيَّمَا ضَرْبٍ</قول> وَ<قول هوية='١٦٢٣٧'>ضُرِبَ عَمْرٌو ضَرْبًا شَدِيْدًا</قول>
   </مقطع>
    <مقطع هوية='٧٦٦٢٤'>وَتَقُوْلُ عَلَى قَوْلِ السَّاْئِلَ <قول هوية='٦٣٨١٤'>كَمْ ضَرْبَةً ضُرِبَ بِهِ</قول></مقطع>
    <مقطع هوية='٦٣٤٦٣'>وَلَيْسَ فِي هٰذَا إِضْمَاْرُ شَيْءٍ سِوَى <حرف>كَمْ</حرف> وَالْمَفْعُوْلُ <حرف>كَمْ</حرف></مقطع>
    <مقطع هوية='٧٥٨٦٦'>فَتَقُوْلُ <قول هوية='٥١٤٦٠'>ضُرِبَ بِهِ ضَرْبَتَاْنِ</قول> وَ<قول هوية='٩٤٦١٩'>سِيْرَ عَلَيْهِ سَيْرَتَاْنِ</قول>
   </مقطع>
    <مقطع هوية='٦٣٩٦٤'>لِأَنَّهُ أَرَاْدَ أَنْ يُبَيِّنَ لَهُ الْعِدَّةَ</مقطع>
    <مقطع هوية='٢٠٧٢٠'>فَجَرَى عَلَى سَعَةِ الْكَلَامِ وَالِاخْتِصَاْرِ</مقطع>
    <مقطع هوية='٥٢٨٨٦'>وَإِنْ كَاْنَتْ الضَّرْبَتَاْنِ لَا تُضْرَبَاْنِ</مقطع>
    <مقطع هوية='٩٧٦٣٨'>وَإِنَّمَا الْمَعْنَى <قول هوية='٣٤٠٣٨'>كَمْ ضُرِبَ الَّذِي وَقَعَ بِهِ الضَّرْبُ مِنْ ضَرْبَةٍ</قول>
   </مقطع>
    <مقطع هوية='٩٢٣٣٧'>فَأَجَاْبَهُ عَلَى هٰذَا الْمَعْنَى وَلٰكِنَّهُ اتَّسَعَ وَاْخْتَصَرَ</مقطع>
    <مقطع هوية='١٦٥٨١'>وَكَذٰلِكَ هٰذِهِ الْمَصَاْدِرُ الَّتِي عَمِلَتْ فِيْهَا أَفْعَاْلُهَا</مقطع>
    <مقطع هوية='١٩١٥٤'>إِنَّمَا يُسْأَلُ عَنْ هٰذَا الْمَعْنَى وَلٰكِنَّهُ يَتَّسِعُ وَيَخْزِلُ الَّذِي يَقَعُ بِهِ الْفِعْلُ اخْتِصَاْرًا وَاْتِّسَاْعًا</مقطع>
    <مقطع هوية='٨٥٢٦٦'>وَقَدْ عُلِمَ أَنَّ الضَّرْبَ لَا يُضْرَبُ</مقطع>
    <مقطع هوية='٨٢٥٨٠'>وَمِنْ ذٰلِكَ <قول هوية='٩٩٦٨٨'>سِيْرَ عَلَيْهِ خَرْجَتَاْنِ</قول> وَ<قول هوية='٦٠٤٧٣'>صِيْدَ عَلَيْهِ مَرَّتَاْنِ</قول>
   </مقطع>
    <مقطع هوية='١٠٩٧٥'>َولَيْسَ ذٰلِكَ بِأَبْعَدَ مِنْ قَوْلِكَ <قول هوية='١٢٦٠٣'>وُلِدَ لَهُ سِتُّوْنَ عَاْمًا</قول>
   </مقطع>
    <مقطع هوية='٧٣٢٦١'>وَسَمِعْتُ مَنْ أَثِقُ بِهِ مِنَ الْعَرَبِ يَقُوْلُ <قول هوية='٢٩٨٩٩'>بُسِطَ عَلَيْهِ مَرَّتَاْنِ</قول> وَإِنَّمَا يُرِيْدُ <قول هوية='٩٥٥٤٠'>بُسِطَ عَلَيْهِ الْعَذَاْبُ مَرَّتَيْنِ</قول>
   </مقطع>
    <مقطع هوية='٩٥٨٣٠'>وَتَقُوْلُ <قول هوية='١٥٦٩٩'>سِيْرَ عَلَيْهِ طَوْرَاْنِ طَوْرٌ كَذَا وَطَوْرٌ كَذَا</قول> وَالنَّصْبُ ضَعَيفٌ جِدًا إِذَا ثَنَّيْتَ كَقَوْلِكَ <قول هوية='١٢٦٨٢'>طَوْرٌ كَذَا وَطَوْرٌ كَذَا</قول></مقطع>
    <مقطع هوية='٤٠٤٣٨'>وَقَدْ يَكُوْنُ فِي هٰذَا النَّصْبُ إِذَا أَضْمَرْتَ</مقطع>
    <مقطع هوية='٢٧٥٧٣'>وَقَدْ تَقُوْلُ <قول هوية='٣٥٠٨٦'>سِيْرَ عَلَيْهِ مَرَّتَيْنِ</قول> تَجْعَلُهُ عَلَى الدَّهْرِ أَيْ ظَرْفًا</مقطع>
    <مقطع هوية='٠٥٦٧١'>وَتَقُوْلُ <قول هوية='٣٣٦٧٦'>سِيْرَ عَلَيْهِ طَوْرَيْنِ</قول>
   </مقطع>
    <مقطع هوية='٠٠٤٧١'>وَتَقُوْلُ <قول هوية='٤٥٩٥٤'>ضُرِبَ بِهِ ضَرْبَتَيْنِ</قول> أَيْ <قول هوية='٢٦٠٢٣'>قَدْرَ ضَرْبَتَيْنِ مِنَ السَّاْعَاْتِ</قول>
   </مقطع>
    <مقطع هوية='٨٢٠٠٠'>كَمَا تَقُوْلُ <قول هوية='٦٣٥٤٩'>سِيْرَ عَلَيْهِ تَرْوِيْحَتَيْنِ</قول> فَهٰذَا عَلَى الأحيان</مقطع>
    <مقطع هوية='٦٥٩٥٦'>وَمِثْلُ ذٰلِكَ <قول هوية='٨٨٧٠٠'>انْتُظِرَ بِهِ نَحْرَ جَزُوْرَيْنِ</قول>
   </مقطع>
    <مقطع هوية='٣٤٢١٢'>إِنَّمَا جَعَلَهُ عَلَى السَّاْعَاْتِ كَمَا قَالَ  <حرف>مَقْدَمَ الْحَاْجِّ</حرف> وَ<حرف>خَفُوْقَ النَّجْمِ</حرف>  فَكَذٰلِكَ جَعَلَهُ ظَرْفًا</مقطع>
    <مقطع هوية='٧١٢٧٧'>وَقَدْ يَجُوْزُ فِيْهِ الرَّفْعُ إِذَا شَغَلْتَ بِهِ الْفِعْلَ</مقطع>
    <مقطع هوية='٢٣٥١٨'>وَإِنْ جَعَلْتَ  <حرف>الْمَرَّتَيْنِ</حرف>  وَمَا أَشْبَهَهُمَا مِثْلَ  <حرف>السَّيْر</حرف>  رَفَعْتَ وَنَصَبْتَ إِذَا أَضْمَرْتَ</مقطع>
    <مقطع هوية='٦٩٠١٩'>وَمِمَّا يَجِيْءُ تَوْكِيْدًا وَيُنْصَبُ قَوْلُهُ <قول هوية='١٥٠١١'>سِيْرَ عَلَيْهِ سَيْرًا</قول> وَ<قول هوية='١٣٥٠٥'>انْطُلِقَ بِهِ انْطِلَاقًا</قول> وَ<قول هوية='٥٦٣٠٢'>ضُرِبَ بِهِ ضَرْبًا</قول>
   </مقطع>
    <مقطع هوية='٩٢٥١٣'>فَيُنْصَبُ عَلَى وَجْهَيْنِ أَحَدُهُمَا عَلَى أَنَّهُ حَالٌ عَلَى حَدِّ قَوْلِكَ <قول هوية='٠٨٠٦٢'>ذُهِبَ بِهِ مَشْيًا</قول> وَ<قول هوية='٧٩١٨٥'>قُتِلَ بِهِ صَبْرًا</قول>
   </مقطع>
    <مقطع هوية='٧٦٠٨٥'>وَإِنْ وَصَفْتَهُ عَلَى هٰذَا الْحَدِّ كَاْنَ نَصْبًا</مقطع>
    <مقطع هوية='٢٦٠٠٧'>تَقُوْلُ <قول هوية='٣٦٣٠٣'>سِيْرَ بِهِ سَيْرًا عَنِيْفًا</قول> كَمَا تَقُوْلُ <قول هوية='٠٨٨٠٥'>ذُهِبَ بِهِ مَشْيًا عَنِيْفًا</قول>
   </مقطع>
    <مقطع هوية='٠٦٣٢٧'>وَإِنْ شِئْتَ نَصَبْتَهُ عَلَى إِضْمَاْرِ فِعْلٍ آخَرَ وَيَكُوْنُ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع هوية='١٨٠٣٦'>فَتَقُوْلُ <قول هوية='١٩٣٢٦'>سِيْرَ عَلَيْهِ سَيْرًا</قول> وَ<قول هوية='٢٦٩٥٣'>ضُرِبَ بِهِ ضَرْبًا</قول> كَأَنَّكَ قُلْتَ بَعْدَ مَا قُلْتَ <قول هوية='٦٤٩٢٧'>سِيْرَ عَلَيْهِ</قول> وَ<قول هوية='٨٩١٨٤'>ضُرِبَ بِهِ</قول>
       <قول هوية='٢٢٤٤١'>يَسِيْرُوْنَ سَيْرًا</قول> وَ<قول هوية='٦٨٤٢٨'>يَضْرِبُوْنَ ضَرْبًا</قول> وَ<قول هوية='٩٠٤٩٨'>يَنْطَلِقُوْنَ انْطِلَاقًا</قول>
   </مقطع>
    <مقطع هوية='٠٧١٠٧'>وَلٰكِنَّهُ صَاْرَ الْمَصْدَرُ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ نَحْوُ  <حرف>يَضْرِبُوْنَ</حرف> وَ<حرف>يَنْطَلِقُوْنَ</حرف>  وَجَرَى عَلَى قَوْلِهِ <قول هوية='٧٦١٧٤'>إِنَّمَا أَنْتَ سَيْرًا سَيْرًا</قول> وَعَلَى قَوْلِهِ <قول هوية='٩٣٠٢٤'>الْحَذَرَ الْحَذَرَ</قول>
   </مقطع>
    <مقطع هوية='٩٧٧٦٣'>وَإِنْ أَنْتَ قُلْتَ عَلَى هٰذَا الْمَعْنَى <قول هوية='٩٢٦١٤'>سِيْرَ عَلَيْهِ السَّيْرَ</قول> وَ<قول هوية='٠٨٩٣٥'>ضُرِبَ بِهِ الضَّرْبَ</قول> جَاْزَ عَلَى قَوْلِهِ <قول هوية='٧٠١٧٥'>الْحَذَرَ الْحَذَرَ</قول> وَعَلَى مَا جَاْءَ فِيْهِ الْأَلِفُ وَاللَّامُ نَحْوُ  <حرف>الْعِرَاك</حرف>
   </مقطع>
    <مقطع هوية='٧٥٦٢٨'>وَكَاْنَ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ وَهُوَ عَرَبِيٌّ جَيِّدٌّ حَسَنٌ</مقطع>
    <مقطع هوية='٦٣٦٥٠'>وَمِثْلُهُ <قول هوية='٩١٤٢٦'>سِيْرَ عَلَيْهِ سَيْرَ الْبَرِيْدِ</قول> وَإِنْ وَصَفْتَ عَلَى هٰذَه الْحَالِ لَمْ يُغَيِّرْهُ الْوَصْفُ كَمَا لَمْ يُغَيَّرْ الْوَصْفُ مَا كَاْنَ حَالًا</مقطع>
    <مقطع هوية='٥٢٧٧٢'>وَلَا يَجُوْزُ أَنْ تُدْخِلَ الْأَلِفَ وَاللَّامَ فِي  <حرف>السَّيْرِ</حرف>  إِذَا كَاْنَ حَالًا كَمَا لَمْ يَجُزْ أَنْ تَقُوْلَ <قول هوية='٩٧٧٥١'>ذُهِبَ بِهِ الْمَشْيَ الْعَنِيفَ</قول> وَأَنْتَ تُرِيْدُ أَنْ تَجْعَلَهُ حَالًا</مقطع>
    <مقطع هوية='٩٠٦٧٢'>قَالَ الرَّاْعى</مقطع>
    
    <شاهدة هوية='٨٢٨٥٢'>
       <بيت>
          <مصراع>نَظَّاْرَةً حِيْنَ تَعْلُو الشَّمْسُ رَاْكِبَهَا</مصراع>
          <مصراع>طَرْحًا بَعَيْنَيْ لِيَاْحٍ فِيْهِ تَحْدِيْدُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='١١٦٢٣'>فَأَكَّدَ بِقَوْلِهِ  <حرف>طَرْحًا</حرف>  وَشَدَّدَ لِأَنَّهُ يَعْلَمُ الْمُخَاْطَبُ حِيْنَ قَالَ  <حرف>نَظَّاْرَةً</حرف>  أَنَّهَا تَطْرَحُ</مقطع>
    <مقطع هوية='٥١٤٩١'>وَإِنْ شَيْءتَ قُلْتَ <قول هوية='١٣٤٨٣'>سِيْرَ عَلَيْهِ السَّيْرُ</قول> كَمَا قُلْتَ <قول هوية='٢٩٦٣٩'>سِيْرَ عَلَيْهِ سَيْرٌ شَدِيْدٌ</قول>
   </مقطع>
    <مقطع هوية='٥٣٠٠٨'>وَإِنْ وَصَفْتَهُ كَاْنَ أَقْوَى وَأَبْيَنَ كَمَا كَاْنَ ذٰلِكَ فِي قَوْلِهِ <قول هوية='٩٥٣٢٥'>سِيْرَ عَلَيْهِ لَيْلٌ طَوِيْلٌ وَنَهَاْرٌ طَوِيْلٌ</قول>
   </مقطع>
    <مقطع هوية='٠٧١٠٢'>وَجَمِيْعُ مَا يَكُوْنُ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ لَا يَكُوْنُ إِلَّا عَلَى فِعْلٍ قَدْ عَمِلَ فِي الِٱسْمِ لِأَنَّكَ لَا تَلْفِظُ بِالْفِعْلِ فَاْرِغًا</مقطع>
    <مقطع هوية='٢٠٣٨٩'>فَمِنْ ثَمَّ لَمْ يَكُنْ فِيْهِ الرَّفْعُ فِي كَلَامِهِمْ لِأَنَّهُ إِنَّمَا يَعْمَلُ فِيْهِ مَا هُوَ بِمَنْزِلَةِ اللَّفْظِ بِهِ</مقطع>
    <مقطع هوية='١١٢٨٤'>إِلَّا أَنَّهُ صَاْرَ كَأَنَّهُ فِعْلٌ قَدْ لُفِظَ بِهِ</مقطع>
    <مقطع هوية='٣٠١٣١'>فَأَوْلَى مَا عَمِلَ فِيْهِ مَا هُوَ بِمَنْزِلَةِ اللَّفْظِ بِهِ</مقطع>
    <مقطع هوية='٧٣٨٩٩'>وَمِمَّا يَسْبِقُ فِيْهِ الرَّفْعُ مَنَ الْمَصَاْدِرِ لِأَنَّهُ يُرَاْدُ بِهِ أَنْ يَكُوْنَ فِي مَوْضِعِ غَيْرِ الْمَصْدَرِ قَوْلُهُ <قول هوية='٥٠٨٣٣'>قَدْ خِيْفَ مِنْهُ خَوْفٌ</قول> وَ<قول هوية='١٣٥٧٤'>قَدْ قِيْلَ فِي ذٰلِكَ قَوْلٌ</قول>
   </مقطع>
    <مقطع هوية='٧٥٢٤٦'>إِنَّمَا يُرِيْدُ <قول هوية='٣٦٧٨٥'>قَدْ خِيْفَ مِنْهُ أَمْرٌ أَوْ شَيْءٌ</قول> وَ<قول هوية='٨٥٧٦٤'>قَدْ قَيلَ فِي ذٰلِكَ خَيْرٌ أَوْ شَرٌّ</قول>
   </مقطع>
    <مقطع هوية='٠٠٣٠٢'>وَمِثْلُ هٰذَا فِي الْمَعْنَى <قول هوية='٤٢٦٠٤'>كَاْنَ مِنْهُ كَوْنٌ</قول> أَيْ <قول هوية='٩٢٤١٦'>كَاْنَ مِنْ ذٰلِكَ أَمْرٌ</قول>
   </مقطع>
    <مقطع هوية='٦٥٤٤٣'>وَإِنْ حَمَلْتَهُ عَلَى مَا حَمَلْتَ عَلَيْهِ السَّيْرَ وَالضَّرْبَ فِي التَّوْكِيْدِ حَالًا وَقَعَ فِيْهِ الْفِعْلُ أَوْ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ نَصَبْتَ</مقطع>
    <مقطع هوية='٨٢٥٧٢'>وَإِنْ كَاْنَ الْمَفْعَلُ مَصْدَرًا أُجْرِيَ مُجْرَى مَا ذَكَرْنَا مِنَ الضَّرْبِ وَالسَّيْرِ وَسَاْئِرِ الْمَصَاْدِرِ الَّتِي ذَكَرْنَا</مقطع>
    <مقطع هوية='٢٣٢٣٤'>وَذٰلِكَ قَوْلُكَ <قول هوية='٦٢٧٦٠'>إِنَّ فِي أَلْفِ دِرْهَمٍ لَمَضْرَبًا</قول> أَيْ  <حرف>إِنَّ فِيْهَا لَضْربًا</حرف>  فَإِذَا قُلْتَ <قول هوية='٦٩٤٦٢'>ضُرِبَ بِهِ ضَربًا</قول> قُلْتَ <قول هوية='٥٣٥٧٤'>ضُرِبَ بِهِ مَضْرَبًا</قول> وَإِنْ رَفَعْتَ رَفَعْتَ</مقطع>
    <مقطع هوية='٣٨٧٣٢'>وَمِثْلُ ذٰلِكَ <قول هوية='٧١١٧٤'>سُرِّحَ بِهِ مُسَرَّحًا</قول> أَيْ  <حرف>تَسْرِيْحًا</حرف>
   </مقطع>
    <مقطع هوية='٦٥٦٢١'>فَالْمُسَرَّحُ وَالتَّسْرِيْحُ بِمَنْزِلَةِ الضَّرْبِ وَالْمَضْرَبِ</مقطع>
    <مقطع هوية='٦٧١٣١'>قَاْلَ جرير</مقطع>
    <شاهدة هوية='٨٧٩١٠'>
       <بيت>
          <مصراع>أَلَمْ تَعْلَمْ مُسَرَّحَى الْقَوَافِي</مصراع>
          <مصراع>فَلَا عِيًّا بِهِنَّ وَلَا اجْتِلَابَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٤٢٣٣٩'>أَيْ تَسْرِيْحِى الْقَوَافِي</مقطع>
    <مقطع هوية='٢٥٦٨٦'>وَكَذٰلِكَ تَجْرِي الْمَعْصِيَةُ مَجْرَى الْعِصْيَاْنِ وَالْمَوْجِدَةِ بِمَنْزِلَةِ الْمَصْدَرِ لَوْ كَاْنَ الْوَجْْدُ يُتَكَلَّمُ بِهِ</مقطع>
    <مقطع هوية='٢٩٠٧٦'>قَالَ الشَّاْعِرُ وَهُوَ ابْنُ أَحْمَرَ</مقطع>
    <شاهدة هوية='٠٤٧٢٤'>
       <بيت>
          <مصراع>تَداْركْنَ حيًّا مِنْ نُمَيْرِ بنِ عامرٍ</مصراع>
          <مصراع>أُساْرَى تُسامُ الذُّلَّ قَتْلًا وَمَحْرَبَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٣٠٩٨٥'>فَإِنْ قُلْتَ <قول هوية='١٨٩١٧'>ذُهِبَ بِهِ مَذهَبٌ</قول> أَوْ <قول هوية='٧٧٢٧٠'>سُلِكَ بِهِ مَسْلَكٌ</قول> رَفَعْتَ لِأَنَّ الْمَفْعَلَ هٰهُنَا لَيْسَ بِمَنْزِلَةِ الذَّهَاْبِ وَالسُّلُوْكِ</مقطع>
    <مقطع هوية='٢١٢٤٠'>وَإِنَّمَا هُوَ الْوَجْهُ الَّذِي يُسْلَكُ فِيْهِ وَالْمَكَاْنُ الَّذِي يُذْهَبُ إِلَيْهِ</مقطع>
    <مقطع هوية='٧٩٢٢٦'>وَإِنَّمَا هُوَ بِمَنْزِلَةِ قَوْلِكَ <قول هوية='١٥٥١٠'>ذُهِبَ بهِ السُّوْقُ</قول> وَ<قول هوية='٥٧٠١٤'>سُلِكَ بِهِ الطَّرِيْقُ</قول>
   </مقطع>
    <مقطع هوية='٢٦١٤٧'>وَكَذٰلِكَ الْمَفعَلُ إِذَا كَاْنَ حِيْنًا نَحْوُ قَوْلِهِمْ <قول هوية='٨٦٧٦٩'>أَتَتِ النَّاقَةُ عَلَى مَضْرِبِهَا</قول> أَيْ عَلَى زَمَاْنِ ضِرَاْبِهَا</مقطع>
    <مقطع هوية='١٤٤١٠'>وَكَذٰلِكَ  <حرف>مَبْعَثُ الْجُيُوْشِ</حرف>  تَقُوْلُ <قول هوية='٩٣٧٩٦'>سِيْرَ عَلَيْهِ مَبْعَثُ الْجُيُوْشِ</قول> وَ<حرف>مَضْرِبُ الشَّوْلِ</حرف>
   </مقطع>
    <مقطع هوية='٩٨٠٩٤'>قَالَ حُمَيْدُ بْنُ ثَوْرٍ</مقطع>
        <شاهدة هوية='٢٦٦٣٩'>
       <بيت>
          <مصراع>وَمَا هِيَ إِلَّا فِي إزاْرٍ وَعِلْقَةٍ</مصراع>
          <مصراع>مُغاْرَ ابنِ هَمّامٍ عَلَى حََىّ خَثْعَمًا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٢٢٣٦٦'>فَصَيَّرَ  <حرف>مُغَاْرًا</حرف>  وَقْتًا وَهُوَ ظَرْفٌ</مقطع>

