    <عنوان>
       <مقطع هوية='٣٧٦٢٦' رقم="١">هٰذَا بَاْبُ مَا يَحْتَمِلُ الْشِعْرُ</مقطع>
   </عنوان>
      <مقطع هوية='٦٩٥٠٥' رقم="٢">اِعْلَمْ أَنَّهُ يَجُوْزُ فِي الشِّعْرِ مَا لَا يَجُوْزُ فِي الْكَلَامِ</مقطع>
      <مقطع>مِنْ صَرْفِ مَا لَا يَنْصَرِفُ يُشَبِّهُوْنَهُ بِمَا يَنْصَرِفُ مِنْ الْأَسْمَاْءِ</مقطع>
       <مقطع هوية='٨٥١٨٨' رقم="٤">لِأَنَّهَا أَسْمَاْءٌ كَمَا أَنَّهَا أَسْمَاْءُ</مقطع>
       <مقطع هوية='٠٤٢٥٠' رقم="٥">وَحَذْفِ مَا لَا يُحْذَفُ يُشَبِّهُوْنَهُ بِمَا قَدْ حُذِفَ وَاسْتُعْمِلَ مَحْذُوفًا</مقطع>
       <مقطع هوية='٩٢٥٠٧' رقم="٧">كَمَا قَالَ <شاعر>الْعَجَّاْجُ</شاعر>
      </مقطع>
       <شاهدة هوية='٠٢١٧٥'>
          <بيت>
             <مصراع>قَوَاْطِنا مَكَّةَ مِنْ وَُرْقِ الْحَمَى</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٢٦"/>
       <مقطع هوية='١٢٧٤٨' رقم="٨">يُرِيْدُ الْحَمَامُ</مقطع>
       <مقطع هوية='٩٣٤٥٦' رقم="٩">وَقَالَ خِفَافَ بْنِ نُدْبَةٌ السُّلَمِىُّ</مقطع>
       <شاهدة هوية='٧٥٢٥٨'>
          <بيت>
             <مصراع>كَنَوَاْحِ رِيَشِ حَمَّامَةٍ نَجْدِيَّةٍ</مصراع>
             <مصراع>وَمَسَحْتِ بِاللِّثَتَينَ عَصْفَ الْإِثْمِدِ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٣٣٩٨٢' رقم="١٠">وَكَمَا قَالَ</مقطع>
       <شاهدة هوية='٤١٩٥٧'>
          <بيت>
             <مصراع>هَلْ فَعَرَفَ الْدَاْرُ عَلَى تِبْرَاكاْ</مصراع>
             <مصراع>دَاْرٌ لِسُعْدَى إِذْهِ مِنْ هَوَاكَا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٥١٨٧٣' رقم="١١">وَقَالَ</مقطع>
       <شاهدة هوية='٧٢٥٩٠'>
          <بيت>
             <مصراع>فَطِرْتُ بمَنُصَلَىْ فِي يَعْمَلَاتٍ</مصراع>
             <مصراع>دَوَامِى الْأَيِّدُ يَخْبِطْنَ السَرِيْحا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٣٨٧٢٦' رقم="١٢">وَكَمَا قَالَ النَّجَاْشِيّ</مقطع>
       <شاهدة هوية='٠٥٨١٨'>
          <بيت>
             <مصراع>فَلَسْتُ بِآتِيِهَ وَلَا أَسْتَطِيْعُهْ</مصراع>
             <مصراع>وَِلَاكِ أَسْقِنِي إِنِ كَانَ مَاْؤُكِ ذَا فَضْلِ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٢٧"/>
       <مقطع هوية='٢٣١١٣' رقم="١٣">وَكَمَا قَالَ مَالِكٌ بْنِ خُرَيْمٍ الْهَمْدَانِيُّ</مقطع>
       <شاهدة هوية='٥٢٠٨٤'>
          <بيت>
             <مصراع>فَإِنْ يَكُ غَثَّا أَوْ سَمِيْنا فَإِنَّنِىٓ</مصراع>
             <مصراع>سَأَجْعَلُ عَيْنَيْهِ لِنَفْسِهِ مُقنّعا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٢٢٧٦٥' رقم="١٤">وَقَالَ الْأَعْشَى</مقطع>
       <شاهدة هوية='٥٤٩٨٣'>
          <بيت>
             <مصراع>وَأَخُوْ الْغَوَانِ مَتََى يَشَأْ يَصْرِ مِنْهَ</مصراع>
             <مصراع>وَيَعُدْنَ أَعْدَاْءً بُعَيْدَ وَِدَاْدِ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٨٢١٣٢' رقم="١٥">وَرُبَّمَا مَدُّوْا مِثْلَ  <حرف>مَسَاْجِدَ</حرف>  وَ<حرف>مَنَاْبِرَ</حرف>
      </مقطع>
       <مقطع هوية='١٤٨٩٣' رقم="١٦">فَيَقُوْلُوْنَ  <حرف>مَساْجِيدُ</حرف>  وَ<حرف>مْنَاْبِيرُ</حرف>
      </مقطع>
       <مقطع هوية='١٢٦٢٣' رقم="١٧">شَبَّهُوْهُ بِمَا جُمِعَ عَلَى غَيْرِ وَاْحِدِهِ فِي الْكَلَامِ</مقطع>
       <مقطع هوية='٦١٠٣٣' رقم="١٨">كَمَا قَالَ الْفَرَزْدَقُ</مقطع>
       <شاهدة هوية='٣٢٦٢٤'>
          <بيت>
             <مصراع>تَنْفِيَ يَدَاهَا الْحَصَى فِي كُلَّ هَاْجَرٍ</مصراع>
             <مصراع>نَفَْى الدَنَانِيّرِ تَنْقَاْدُ الْصَّيَّاْرِيِّفِ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٢٨"/>
       <مقطع هوية='٤٧٥٩٨' رقم="١٩">وَقَدْ يبلغُوْنَ بِالْمُعْتَلِّ الْأَصْلَ فَيَقُوْلُوْنَ  <حرف>راْدِدٌ</حرف>  فِي  <حرف>رَاْدٌّ</حرف>  وَ<حرف>ضَنِنُوا</حرف>  فِي  <حرف>ضَّنُّوا</حرف>  وَ<حرف>مَرَرْتمْ بِجَوَاْرِيَ قَبْلُ</حرف>
      </مقطع>
       <مقطع هوية='٧٩٥٢٢' رقم="٢٠">قَالَ قَعْنَبُ بِنُ أُمّ صَاْحِبٍ</مقطع>
       <شاهدة هوية='١٨٧٤٥'>
          <بيت>
             <مصراع>مَهْلَا أَعْاْذِلَّ قَدْ جَرَّبْتِ مِنْ خُلُقِىْ</مصراع>
             <مصراع>أَنَّى أَجُوُدُ لِأَقْوَامٍ وَإِنْ ضَنِنُوا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٦١١٠٥' رقم="٢١">وَمَنْ الْعَرَبِْ مَنْ يُثَقِّلُ الْكَلِمَةَ إِذَا وَقَفَ عَلَيْهَا وَلَا يُثَقِّلُهَا فِي الْوَصْلِ</مقطع>
       <مقطع هوية='٥٥٨١٠' رقم="٢٢">فَإِذَا كَانَ فِي الشِّعْرِ فَهُمْ يُجْرُونَهُ فِي الْوَصْلِ عَلَى حَالِهِ فِي الْوَقْفِ</مقطع>
       <مقطع هوية='٦٧٩٦٤' رقم="٢٣">نَحْوُ  <حرف>سَبْسَبَّا</حرف>  وَ<حرف>كَلْكَلَّا</حرف>
      </مقطع>
       <مقطع هوية='٩٢٠١٠' رقم="٢٤">لِأَنَّهُمْ قَدْ يُثْقِلُونَهُ فِي الْوَقْفِ فَأَثْبِتُوهُ فِي الْوَصْلِ</مقطع>
       <مقطع هوية='٣٧٢٤٣' رقم="٢٥">كَمَا أَثْبَتُوْا الْحَذْفَ فِي قَوْلِهِ لِنَفْسِهِ مَقْنَعَا وَإِنَّمَا حَذْفُهُ فِي الْوَقْفِ</مقطع>
       <مقطع هوية='٤٨٣٩٣' رقم="٢٦">قَالَ رُؤْبَةُ</مقطع>
       <شاهدة هوية='٣٦٣٩٥'>
          <بيت>
             <مصراع>ضَخْمٌ يُحِبُّ الْخُلُقَ الْأَضْخَمَّا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٣٥١٨٠' رقم="٢٧">يُرْوَى بِكَسْرِ الْهَمْزَةِ وَفَتْحِهَا وَقَالَ بَعْضُهُمْ الضِّخَمَّا بِكَسْرِ الْضَّاْدِ</مقطع>
       <مقطع هوية='٦٨٥٣٧' رقم="٢٨">وَقَالَ أَيْضا فِي مِثْلِهِ وَهُوَ الشَّمَّاْخِ</مقطع>
       <شاهدة هوية='٨٢٥٢٤'>
          <بيت>
             <مصراع>لَهُ زَجَلٌ كَأَنَّهُ صَوْتُ حَاْدٍ</مصراع>
             <مصراع>إِذَا طَلَبَ الْوَسِيْقَة أَوْ زَمِيْرُ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٦٧١٦٨' رقم="٢٩">وَقَالَ حَنْظَلَةُ بْنِ فَاْتِكٍ</مقطع>
       <شاهدة هوية='٤٧٦٣٤'>
          <بيت>
             <مصراع>وَأَيْقَنَ أَنَّ الْخَيْلَ إِنْ تَلْتَبِسْ بِهِ</مصراع>
             <مصراع>يَكُنْ لَفَسَيَلِ الْنَّخْلِ بَعْدَهُ آبِرُ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٠٦٦٠٥' رقم="٣٠">وَقَالَ رَجُلٌ مِنْ بَاهِلَةَ</مقطع>
       <شاهدة هوية='٧٠٢٣٠'>
          <بيت>
             <مصراع>أَوْ مُعْبَرُ الظَّهْرِ يُنْبِيْ عَنْ وَلِيَّتِهِ</مصراع>
             <مصراع>مَا حَجَّ رَّبَّهُ فِي الْدُّنْيَا وَلَا أَعْتمَرَّا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٩٣٣٧٠' رقم="٣١">وَقَالَ الْأَعْشَى</مقطع>
       <شاهدة هوية='٧١١٥٧'>
          <بيت>
             <مصراع>الْصَّبَا مَا لَهُ مِنْ مَجْدٍ تَلِيْدٍ وَمَا لَهُ</مصراع>
             <مصراع>مِنَ الْرِّيحِ حَظٌّ لَا الْجَنُوْبِ وَلَا الصَبَبا</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٣٠"/>
       <مقطع هوية='٨٩٩٦١' رقم="٣٢">وَقَالَ</مقطع>
       <شاهدة هوية='٠٦٠٤٧'>
          <بيت>
             <مصراع>بَيَّنَّاهُ فِي دَاْرِ صِدْقٍ قَدْ أَقَامَ بِهَا</مصراع>
             <مصراع>حِيْنَا يُعْلَلْنا وَمَا نُعَللَّهُ</مصراع>
         </بيت>
      </شاهدة>
      <مقطع هوية='٤٣٢٤٩' رقم="٣٣">وَيَحْتَمِلُوْنَ قُبْحَ الْكَلَامِ حَتَّى يَضَعُوْهُ فِي غَيْرِ مَوْضِعِهِ لِأَنَّهُ مُسْتَقِيْمٌ لَيْسَ فِيْهِ نَقْضٌ
      <!-- <بدل> -->
      <!--        <هاْ>نَقْصٌ</هاْ> -->
      <!--        <بكاْ>نَقْضٌ</بكاْ> -->
      <!--        <يع>نَقْضٌ</يع> -->
      <!--    </بدل> -->
      </مقطع>
       <مقطع هوية='٦٢٦٧٣' رقم="٣٤">فَمِنْ ذٰلِكَ قَوْلُهُ</مقطع>
       <شاهدة هوية='٤٢٤٧١'>
          <بيت>
             <مصراع>صَدَدْتِ فَأَطْوَلْتِ الْصُّدُوْدَ وَقَلَّمَا</مصراع>
             <مصراع>وَِصَالٌ عَلٌّ طُولِ الْصُّدُوْدِ يَدُوْمُ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٤٠٥٣٩' رقم="٣٥">وَإِنَّمَا الْكَلَامُ <قول هوية='٢١٠٨٣'>وَقَلَّ مَا يَدُوْمُ وَِصَالٌ</قول>
      </مقطع>
       <مقطع هوية='٩٢٨٠٩' رقم="٣٦">وَجَعَلُوا مَا لَا يَجْرِي فِي الْكَلَامِ إِلَّا ظَرْفًا بِمَنْزِلَةِ غَيْرِهِ مِنْ الْأَسْمَاْءِ</مقطع>
       <مقطع هوية='٤٥٣٢٦' رقم="٣٧">وَذٰلِكَ قَوْلُ الْمَّرَاْرِ بْنِ سَلَامَةَ الْعِجْلِىُّ</مقطع>
       <شاهدة هوية='٨٦٥٢٨'>
          <بيت>
             <مصراع>وَلَا يَنْطِقُ الْفَحْشَاْءَ مَنْ كْانَ مِنْهْمْ</مصراع>
             <مصراع>إِذَا جَلَسُوْا مِنَّا وَلَا مِنْ سَوَاْئِنَا</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٣١"/>
       <مقطع هوية='٥٩٥٢٥' رقم="٣٨">وَقَالَ الْأَعْشَى</مقطع>
       <شاهدة هوية='٤١٢٧٢'>
          <بيت>
             <مصراع>وَمَا قَصَدَتْ مِنْ أَهْلِهَا لِسَوَاْئِكَا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٣٠٩٢٩' رقم="٣٩">وَقَالَ خِطَامٌ الْمُجَاْشِعِىِّ</مقطع>
       <شاهدة هوية='٩٠٧١٧'>
          <بيت>
             <مصراع>وَصَالِيَاْتٍ كَكَمَا يُؤَثْفَيْنْ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع هوية='٤٧٨٣٩' رقم="٤٠">فَعَلُوْا ذٰلِكَ لِأَنَّ مَعْنَى  <حرف>سَوَاْء</حرف>  مَعْنَى  <حرف>غَيْر</حرف>  وَمَعْنَى الْ‍ـ<حرف>كَاف</حرف>  مَعْنَى  <حرف>مِثْل</حرف>
      </مقطع>
       <مقطع هوية='١٠٥٤١' رقم="٤١">وَلَيْسَ شَيْءٌ يُضْطَرُّونَ إِلَيْهِ إِلَّا وَهُمْ يُحَاوِلُوْنَ بِهِ وَجَهًا</مقطع>
       <مقطع هوية='٥٦٤٢٣' رقم="٤٢">وَمَا يَجُوْزُ فِي الْشِعْرِ أَكْثَرَ مِنْ أَنْ أَذْكُرَهُ لَكَ هٰهُنَا</مقطع>
       <مقطع هوية='٧٩٤٦٨' رقم="٤٣">لِأَنَّ هٰذَا مَوْضِعُ جُمَلٍ</مقطع>
       <مقطع هوية='٢٣٠٠٤' رقم="٤٤">وَسَنُبَيِّنُ ذٰلِكَ فِيْمَا يَسْتَقْبِلُ إِنْ شَاْءَ اللّٰهُ</مقطع>
       <هارون مجلد="١" صفحة="٣٢"/>

