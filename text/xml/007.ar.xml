<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨"
     درنبورج="١-٧"
     هارون="١-٢٦"
     يعقوب="١-٥٣"
     البكاء="١-٧٣"
     رقم="٧">

  <عنوان>
    <مقطع هوية='٣٧٦٢٦'>هٰذَا بَاْبُ مَا يَحْتَمِلُ الشِّعْرُ</مقطع>
  </عنوان>
  <مقطع هوية='٦٩٥٠٥'>اِعْلَمْ أَنَّهُ يَجُوْزُ فِي الشِّعْرِ</مقطع>
  <مقطع هوية='٥٨٦٤٤'>مَا لَا يَجُوْزُ فِي الْكَلَامِ</مقطع>
  <مقطع هوية='٨٣٢٤١'>مِنْ صَرْفِ مَا لَا يَنْصَرِفُ</مقطع>
  <مقطع هوية='٣٧٤٨٠'>يُشَبِّهُوْنَهُ بِمَا يَنْصَرِفُ مِنْ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٨٥١٨٨'>لِأَنَّهَا أَسْمَاْءٌ كَمَا أَنَّهَا أَسْمَاْءٌ</مقطع>
  <مقطع هوية='٠٤٢٥٠'>وَحَذْفِ مَا لَا يُحْذَفُ</مقطع>
  <مقطع هوية='٨٩٣٥١'>يُشَبِّهُوْنَهُ بِمَا قَدْ حُذِفَ وَاسْتُعْمِلَ مَحْذُوفًا</مقطع>
  <مقطع هوية='٩٢٥٠٧'>كَمَا قَالَ <شاعر>الْعَجَّاْجُ</شاعر>
  </مقطع>
  <شاهدة هوية='٠٢١٧٥' شاعر="الْعَجَّاْجُ">
    <بيت>
      <مصراع>قَوَاْطِنًا مَكَّةَ مِنْ وُرْقِ <ثبات>الْحَمِي</ثبات></مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٢٧٤٨'>يُرِيْدُ <حرف>الْحَمَامَ</حرف></مقطع>

  <مقطع هوية='٩٣٤٥٦'>وَقَالَ <شاعر>خُفَافُ بْنُ نُدْبَةَ السُّلَمِيُّ</شاعر></مقطع>
  <شاهدة هوية='٧٥٢٥٨'>
    <بيت>
      <مصراع><ثبات>كَنَوَاْحِ</ثبات> رِيِشِ حَمَاْمَةٍ نَجْدِيَّةٍ</مصراع>
      <مصراع>وَمَسَحْتِ بِاللَّثَتَيْنِ عَصْفَ الْإِثْمِدِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٥١٨٧٣'>وَقَالَ</مقطع>
  <شاهدة هوية='٧٢٥٩٠'>
    <بيت>
      <مصراع>وَطِرْتُ بِمُنْصُلِي فِي يَعْمَلَاتٍ</مصراع>
      <مصراع>دَوَاْمِي <ثبات>الْأَيْدِ</ثبات> يَخْبِطْنَ السَّرِيْحَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٨٧٢٦'>وَكَمَا قَالَ <شاعر>النَّجَاْشِيُّ</شاعر></مقطع>
  <شاهدة هوية='٠٥٨١٨'>
    <بيت>
      <مصراع>فَلَسْتُ بِآتِيِْهِ وَلَا أَسْتَطِيْعُهُ</مصراع>
      <مصراع><ثبات>وَلَاكِ</ثبات> اسْقِنِي إِنْ كَانَ مَاْؤُكَ ذَا فَضْلٍ</مصراع>
      <!-- i.e. ولٰكِنْ -->
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٢٧"/>

  <مقطع هوية='٢٣١١٣'>وَكَمَا قَالَ <شاعر>مَالِكُ بْنُ خُرَيْمٍ الْهَمْدَانِيُّ</شاعر></مقطع>
  <شاهدة هوية='٥٢٠٨٤'>
    <بيت>
      <مصراع>فَإِنْ <ثبات>يَكُ</ثبات> غَثًّا أَوْ سَمِيْنًا فَإِنَّنِي</مصراع>
      <مصراع>سَأَجْعَلُ عَيْنَيْهِ لِنَفْسِهِ مَقْنَعًا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٣٩٨٢'>وَقَالَ آخَرُ</مقطع>
  <!-- <مقطع هوية='٣٣٩٨٢'>وَكَمَا قَالَ</مقطع> -->
  <شاهدة هوية='٤١٩٥٧'>
    <بيت>
      <!-- <مصراع>هَلْ فَعَرَفَ الْدَاْرُ عَلَى تِبْرَاكا</مصراع> -->
      <مصراع>دَاْرٌ لِسُعْدَى <ثبات>إِذْهِ</ثبات> مِنْ هَوَاْكَا</مصراع>
      <!-- إِذْ هِيَ -->
    </بيت>
  </شاهدة>


  <مقطع هوية='٢٢٧٦٥'>وَقَالَ <شاعر>الْأَعْشَى</شاعر></مقطع>
  <شاهدة هوية='٥٤٩٨٣'>
    <بيت>
      <مصراع>وَأَخُوْ <ثبات>الْغَوَاْنِ</ثبات> مَتَى يَشَأْ يَصْرِمْنَهُ</مصراع>
      <!-- الغواني -->
      <مصراع>وَنَكُنَّ <!-- يَعُدْنَ --> أَعْدَاْءً بُعَيْدَ وَِدَاْدِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٨٢١٣٢'>وَرُبَّمَا مَدُّوْا مِثْلَ <حرف>مَسَاْجِدَ</حرف>
  وَ<حرف>مَنَاْبِرَ</حرف></مقطع>
  <مقطع هوية='١٤٨٩٣'>فَيَقُوْلُوْنَ <حرف>مَسَاْجِيْدَ</حرف>
  وَ<حرف>مَنَاْبِيْرَ</حرف>
  </مقطع>
  <مقطع هوية='١٢٦٢٣'>شَبَّهُوْهُ بِمَا جُمِعَ عَلَى غَيْرِ وَاْحِدِهِ فِي الْكَلَامِ</مقطع>

  <مقطع هوية='٦١٠٣٣'>كَمَا قَالَ <شاعر>الْفَرَزْدَقُ</شاعر></مقطع>
  <شاهدة هوية='٣٢٦٢٤'>
    <بيت>
      <مصراع>تَنْفِي يَدَاهَا الْحَصَى فِي كُلِّ هَاْجِرَةٍ</مصراع>
      <مصراع>نَفْيَ الدَّنَاْنِيْرِ تَنْقَاْدُ <ثبات>الصَّيَاْرِيْفُ</ثبات></مصراع>
      <!-- الصيرف -->
    </بيت>
  </شاهدة>

  <مقطع هوية='٤٧٥٩٨'>وَقَدْ يَبْلُغُوْنَ بِالمُعْتَلِّ الْأَصْلَ</مقطع>
  <مقطع هوية='٥٩٢٦٧'>فَيَقُوْلُوْنَ <حرف>رَاْدِدٌ</حرف> فِي <حرف>رَاْدٍّ</حرف></مقطع>
  <مقطع هوية='٣٣٥٦٧'>وَ<حرف>ضَنِنُوْا</حرف> فِي <حرف>ضَّنُّوْا</حرف></مقطع>
  <مقطع هوية='٧٥٣٨١'>وَ<حرف>مَرَرْتُمْ بِجَوَاْرِيَ قَبْلُ</حرف></مقطع>

  <مقطع هوية='٧٩٥٢٢'>قَالَ <شاعر>قَعْنَبُ بْنُ أُمِّ صَاْحِبٍ</شاعر></مقطع>
  <شاهدة هوية='١٨٧٤٥'>
    <بيت>
      <مصراع>مَهْلًا أَعَاْذِلَ قَدْ جَرَّبْتِ مِنْ خُلُقِي</مصراع>
      <مصراع>أَنَّي أَجُوُدُ لِأَقْوَاْمٍ وَإِنْ <ثبات>ضَنِنُوْا</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٦١١٠٥'>وَمَنْ الْعَرَبِ مَنْ يُثَقِّلُ الْكَلِمَةَ
  إِذَا وَقَفَ عَلَيْهَا</مقطع>
  <مقطع هوية='٩٩٧٣٢'>وَلَا يُثَقِّلُهَا فِي الْوَصْلِ</مقطع>
  <مقطع هوية='٥٥٨١٠'>فَإِذَا كَانَ فِي الشِّعْرِ</مقطع>
  <مقطع هوية='٥٣٣٥٦'>فَهُمْ يُجْرُوْنَهُ فِي الْوَصْلِ عَلَى حَالِهِ فِي الْوَقْفِ</مقطع>
  <مقطع هوية='٦٧٩٦٤'>نَحْوُ <حرف>سَبْسَبًا</حرف> وَ<حرف>كَلْكَلًا</حرف></مقطع>
  <مقطع هوية='٩٢٠١٠'>لِأَنَّهُمْ قَدْ يُثَقِّلُوْنَهُ فِي الْوَقْفِ</مقطع>
  <مقطع هوية='٧٥٤٠٨'>فَأَثْبَتُوْهُ فِي الْوَصْلِ</مقطع>
  <مقطع هوية='٣٧٢٤٣'>كَمَا أَثْبَتُوْا الْحَذْفَ فِي قَوْلِهِ
  <حرف>لِنَفْسِهِ مَقْنَعًا</حرف></مقطع>
  <مقطع هوية='٩٥٧٠٨'>وَإِنَّمَا حَذَفَهُ فِي الْوَقْفِ</مقطع>

  <مقطع هوية='٤٨٣٩٣'>قَالَ <شاعر>رُؤْبَةُ</شاعر></مقطع>
  <شاهدة هوية='٣٦٣٩٥'>
    <بيت>
      <مصراع>ضَخْمٌ يُحِبُّ الْخُلُقَ <ثبات>الْأَضْخَمَّا</ثبات></مصراع>
      <!-- الْأَضْخَمَ -->
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٥١٨٠'>يُرْوَى بِكَسْرِ الْهَمْزَةِ وَفَتْحِهَا</مقطع>
  <مقطع هوية='٣٦٩٥٠'>وَقَالَ بَعْضُهُمْ <حرف>الضِّخَمَّا</حرف> بِكَسْرِ الضَّاْدِ</مقطع>

  <مقطع هوية='٦٨٥٣٧'>وَقَالَ أَيْضًا فِي مِثْلِ <حرف>لِنَفْسِهِ مَقْنَعًا</حرف> <!-- مِثْلِهِ --> وَهُوَ <شاعر>الشَّمَّاْخُ</شاعر></مقطع>
  <شاهدة هوية='٨٢٥٢٤'>
    <بيت>
      <مصراع>لَهُ زَجَلٌ <ثبات>كَأَنَّهُ</ثبات> صَوْتُ حَاْدٍ</مصراع>
      <!-- كَأَنَّهُو -->
      <مصراع>إِذَا طَلَبَ الْوَسِيْقَةَ أَوْ زَمِيْرُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٦٧١٦٨'>وَقَالَ <شاعر>حَنْظَلَةُ بْنُ فَاْتِكٍ</شاعر></مقطع>
  <شاهدة هوية='٤٧٦٣٤'>
    <بيت>
      <مصراع>وَأَيْقَنَ أَنَّ الْخَيْلَ إِنْ تَلْتَبِسْ بِهِ</مصراع>
      <مصراع>يَكُنْ لَفَسِيْلِ النَّخْلِ <ثبات>بَعْدَهُ</ثبات> آبِرُ</مصراع>
      <!-- بعْدَ هُوَ -->
    </بيت>
  </شاهدة>

  <مقطع هوية='٠٦٦٠٥'>وَقَالَ رَجُلٌ مِنْ بَاهِلَة</مقطع>
  <شاهدة هوية='٧٠٢٣٠'>
    <بيت>
      <مصراع>أَوْ مُعْبَرُ الظَّهْرِ يُنْبِي عَنْ وَلِيَّتِهِ</مصراع>
      <مصراع>مَا حَجَّ <ثبات>رَبُّهُ</ثبات> فِي الدُّنْيَا وَلَا اعْتَمَرَا</مصراع>
      <!-- رَبُّهُو -->
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٣٣٧٠'>وَقَالَ <شاعر>الْأَعْشَى</شاعر></مقطع>
  <شاهدة هوية='٧١١٥٧'>
    <بيت>
      <مصراع><!-- الصَّبَا --> مَا <ثبات>لَهُ</ثبات> مِنْ مَجْدٍ تَلِيْد وَمَا
      <ثبات>لَهُ</ثبات></مصراع>
      <!-- لَهُو -->
      <مصراع>مِنَ الرِّيْحِ حَظٌّ لَا الْجَنُوْبِ وَلَا الصَّبَا</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٨٩٩٦١'>وَقَالَ</مقطع>
  <شاهدة هوية='٠٦٠٤٧'>
    <بيت>
      <مصراع><ثبات>بَينَاْهُ</ثبات> فِي دَاْرِ صِدْقٍ قَدْ أَقَامَ بِهَا</مصراع>
      <!-- بينا هو -->
      <مصراع>حِيْنًا يُعَلِّلُنَا وَمَا نُعَلِّلُهُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٤٣٢٤٩'>وَيَحْتَمِلُوْنَ قُبْحَ الْكَلَامِ حَتَّى يَضَعُوْهُ فِي غَيْرِ مَوْضِعِهِ</مقطع>
  <مقطع هوية='٥٥٧٤٣'>لِأَنَّهُ مُسْتَقِيْمٌ لَيْسَ فِيْهِ نَقْضٌ
  <!-- <بدل> -->
  <!--        <هاْ>نَقْصٌ</هاْ> -->
  <!--        <بكاْ>نَقْضٌ</بكاْ> -->
  <!--        <يع>نَقْضٌ</يع> -->
  <!--    </بدل> -->
  </مقطع>

  <مقطع هوية='٦٢٦٧٣'>فَمِنْ ذٰلِكَ قَوْلُهُ</مقطع>
  <شاهدة هوية='٤٢٤٧١'>
    <بيت>
      <مصراع>صَدَدْتِ فَأَطْوَلْتِ الْصُّدُوْدَ <ثبات>وَقَلَّمَا</ثبات></مصراع>
      <مصراع><ثبات>وِصَالٌ عَلَى طُوْلِ الصُّدُوْدِ يَدُوْمُ</ثبات></مصراع>
      <!-- postpositioning of verb after qallamā -->
    </بيت>
  </شاهدة>

  <مقطع هوية='٤٠٥٣٩'>وَإِنَّمَا الْكَلَامُ
  <قول هوية='٢١٠٨٣'>وَقَلَّ مَا يَدُوْمُ وِصَاْلٌ</قول>
  </مقطع>
  <مقطع هوية='٩٢٨٠٩'>وَجَعَلُوْا مَا لَا يَجْرِي فِي الْكَلَامِ إِلَّا ظَرْفًا
  بِمَنْزِلَةِ غَيْرِهِ مِنَ الْأَسْمَاْءِ</مقطع>

  <مقطع هوية='٤٥٣٢٦'>وَذٰلِكَ قَوْلُ <شاعر>الْمَّرَاْرِ بْنِ سَلَامَةَ الْعِجْلِىُّ</شاعر></مقطع>
  <شاهدة هوية='٨٦٥٢٨'>
    <بيت>
      <مصراع>وَلَا يَنْطِقُ الْفَحْشَاْءَ مَنْ كْانَ مِنْهُمْ</مصراع>
      <مصراع>إِذَا جَلَسُوْا مِنَّا <ثبات>وَلَا مِنْ سَوَاْئِنَا</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٥٩٥٢٥'>وَقَالَ <شاعر>الْأَعْشَى</شاعر></مقطع>
  <شاهدة هوية='٤١٢٧٢'>
    <بيت>
      <مصراع>وَمَا قَصَدَتْ مِنْ أَهْلِهَا <ثبات>لِسَوَاْئِكَا</ثبات></مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٣٠٩٢٩'>وَقَالَ <شاعر>خِطَامٌ الْمُجَاْشِعِىُّ</شاعر></مقطع>
  <شاهدة هوية='٩٠٧١٧'>
    <بيت>
      <مصراع>وَصَاْلِيَاْتٍ <ثبات>كَكَمَا يُؤَثْفَيْنْ</ثبات></مصراع>
      <!-- كَمِثْلِ يُؤَثْفَيْن -->
    </بيت>
  </شاهدة>

  <مقطع هوية='٤٧٨٣٩'>فَعَلُوْا ذٰلِكَ لِأَنَّ مَعْنَى <حرف>سَوَاْءٍ</حرف>
  مَعْنَى <حرف>غَيْرٍ</حرف></مقطع>
  <مقطع هوية='٠٢٩٧٠'>وَمَعْنَى الْكَاْفِ مَعْنَى <حرف>مِثْلٍ</حرف></مقطع>

  <مقطع هوية='١٠٥٤١'>وَلَيْسَ شَيْءٌ يُضْطَرُّوْنَ إِلَيْهِ إِلَّا وَهُمْ يُحَاْوِلُوْنَ بِهِ وَجَهًا</مقطع>
  <مقطع هوية='٥٦٤٢٣'>وَمَا يَجُوْزُ فِي الشِّعْرِ أَكْثَرُ مِنْ أَنْ أَذْكُرَهُ لَكَ هٰهُنَا</مقطع>
  <مقطع هوية='٧٩٤٦٨'>لِأَنَّ هٰذَا مَوْضِعُ جُمَلٍ</مقطع>
  <مقطع هوية='٢٣٠٠٤'>وَسَنُبَيِّنُ ذٰلِكَ فِيْمَا نَسْتَقْبِلُ إِنْ شَاْءَ اللّٰهُ</مقطع>

