  <عنوان>
    <مقطع هوية='٦٥٢٠٠'>هِذَا بَاْبُ التَّصْغِيْرَ</مقطع>
  </عنوان>
  <مقطع هوية='٧٧١٦٤'>اِعْلَمْ أَنَّ التَّصْغِيْرَ إنَّمَا هُوَ فِي الْكَلَاْمِ عَلَى ثَلَاْثَةِ أَمْثِلَةٍ</مقطع>
  <مقطع هوية='٤٦٧٩٦'>عَلَى <مثال>فُعَيْلٍ</مثال> وَ<مثال>فُعَيْعِلٍ</مثال> وَ<مثال>فُعَيْعِيْلٍ</مثال></مقطع>
  <مقطع هوية='٥٧٨٤٢'>فَأَمَّا <مثال>فُعَيْلٌ</مثال></مقطع>
  <مقطع هوية='١٨٠٠٧'>فَلَمَّا كَاْنَ عِدَّةُ حُرُوْفِهِ ثَلَاْثَةَ أَحْرُفٍ</مقطع>
  <مقطع هوية='٢٨٦٧١'>وَهُوَ أَدْنَى التَّصْغِيْرِ</مقطع>
  <مقطع هوية='٢٤٨٩٨'>لَا يَكُوْنُ مُصَغَّرٌ عَلَى أَقَلِّ مِنْ <مثال>فُعَيْلٍ</مثال></مقطع>
  <مقطع هوية='١٧٢٨٣'>وَذٰلِكَ نَحْوَ <مصغر>قُبَيْسٍ</مصغر> وَ<مصغر>جُمَيْلٍ</مصغر> وَ<مصغر>جُبَيْلٍ</مصغر></مقطع>
  <مقطع هوية='١٦٨٦٤'>وَكَذٰلِكَ جَمِيْعُ مَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفِ</مقطع>
  <مقطع هوية='٣٣٥٩٦'>وَأَمَّا <مثال>فُعَيْعِلٌ</مثال></مقطع>
  <مقطع هوية='٧٦٧٢٢'>فَلَمَّا كَاْنَ عَلَى أَرْبَعَةِ أَحْرُفٍ وَهُوَ الْمِثَاْلُ الثَّاْنِي</مقطع>
  <مقطع هوية='٨٧٧٥١'>وَذٰلِكَ نَحْوُ <مصغر>جُعَيْفِرٍ</مصغر> وَ<مصغر>مُطَيْرِفٍ</مصغر></مقطع>
  <مقطع هوية='٥٧٨١٠'>وَقَوْلُكَ فِي <اسم>سِبَطْرٍ</اسم> <مصغر>سُبَيْطِرٌ</مصغر></مقطع>
  <مقطع هوية='٦١٤١٧'>وَ<اسم>غُلَاْمٍ</اسم> <مصغر>غُلَيِّمٌ</مصغر></مقطع>
  <مقطع هوية='٩٥١١٨'>وَ<اسم>عُلَبِطٍ</اسم> <مصغر>عُلَيْبِطٌ</مصغر></مقطع>
  <مقطع هوية='٦٣٣٥٩'>فَإِذَا كَاْنَتْ الْعِدَّةُ أَرْبَعَةَ أَحْرُفٍ صَاْرَ التَّصْغِيْرُ عَلَى مِثَاْلِ <مثال>فُعَيْعِلٍ</مثال></مقطع>
  <مقطع هوية='٤١٤٩١'>تَحَرَّكْنَ جُمَعَ أَوْ لَمْ يَتَحَرَّكْنَ</مقطع>
  <مقطع هوية='٧٣٢١١'>اخْتَلَفَتْ حَرَكَاْتُهُنَّ أَوْ لَمْ يَخْتَلِفْنَ</مقطع>
  <مقطع هوية='٩١٤٤٨'>كَمَا صَاْرَ كُلُّ بِنَاْءٍ عِدَّةُ حُرُوْفِهِ ثَلَاْثَةٌ عَلَى مِثَاْلِ <مثال>فُعَيْلٍ</مثال></مقطع>
  <مقطع هوية='٣٦٨٦٧'>تَحَرَّكْنَ جُمَعَ أَوْ لَمْ يَتَحَرَّكْنَ</مقطع>
  <مقطع هوية='٦٩٠٤٩'>اخْتَلَفَتْ حَرَكَاْتُهُنَّ أَوْ لَمْ يَخْتَلِفْنَ</مقطع>
  <مقطع هوية='٣٠١٦٤'>وَأَمَّا <مثال>فُعَيْعِيْلٌ</مثال></مقطع>
  <مقطع هوية='٦٣٢٢٦'>فَلَمَّا كَاْنَ عَلَى خَمْسَةِ أَحْرُفٍ</مقطع>
  <مقطع هوية='٢٩٤٤٥'>وَكَاْنَ الرَّاْبِعُ مِنْهُ وَاوًا أَوْ أَلِفًا أَوْ يَاْءً</مقطع>
  <مقطع هوية='٢٦٧٤٤'>وَذٰلِكَ نَحْوُ قَوْلِكَ فِي <اسم>مِصْبَاْحٍ</اسم> <مصغر>مُصَيْبِيْحٌ</مصغر></مقطع>
  <مقطع هوية='١٣٢٨٩'>وَفِي <اسم>قِنْدِيْلٍ</اسم> <مصغر>قُنَيْدِيْلٌ</مصغر></مقطع>
  <مقطع هوية='٩٣٤٥٤'>وَفِي <اسم>كُرْدُوْسٍ</اسم> <مصغر>كُرَيْدِيْسٌ</مصغر></مقطع>
  <مقطع هوية='٧٨٧٦٤'>وَفِي <اسم>قَرَبُوْسٍ</اسم> <مصغر>قُرَيْبِيْسٌ</مصغر></مقطع>
  <مقطع هوية='٥٧٦١٩'>وَفِي <اسم>حَمَصِيْصٍ</اسم> <مصغر>حُمَيْصِيْصٌ</مصغر></مقطع>
  <مقطع هوية='٢٧١٤٨'>لَا تُبَاْلِي كَثْرَةَ الْحَرَكَاْتِ وَلَا قَلَّتَهَا وَلَا اخْتِلَاْفَهَا</مقطع>
  <مقطع هوية='٩٨٧٧٢'>وَاْعْلَمْ أَنَّ تَصْغِيْرَ مَا كَاْنَ عَلَى أَرْبَعَةِ أَحْرُفٍ</مقطع>
  <مقطع هوية='٥٢٩٢٧'>إنَّمَا يَجِيْءُ عَلَى حَاْلِ مُكَسَّرِهِ لِلْحَمْعِ فِي التَّحَرُّكِ وَالسُّكُوْنِ</مقطع>
  <مقطع هوية='٣٠٣٤٤'>وَيَكُوْنُ ثَاْلِثُهُ حَرْفَ اللِّيْنِ</مقطع>
  <مقطع هوية='٤٤٤٧٨'>كَمَا أَنَّكَ إِذَا كَسَّرْتَهُ لِلْجَمْعِ كَاْنَ ثَاْلِثُهُ حَرْفَ اللِّيْنِ</مقطع>
  <مقطع هوية='٨١٤٨٣'>إِلَّا أَنَّ ثَاِْلِثَ الْجَمْعِ أَلِفٌ وَثَاْلِثُ التَّصْغِيْرِ يَاْءٌ</مقطع>
  <مقطع هوية='٥٦٥١٧'>وَأَوَّلُ التَّصْغِيْرِ مَضْمُوْمٌ وَأَوَّلُ الْجَمْعِ مَفْتُوْحٌ</مقطع>
  <مقطع هوية='١٩٣٧٣'>وكَذٰلِكَ تَصْغِيْرُ مَا كَاْنَ عَلَى خَمْسَةِ أَحْرُفٍ</مقطع>
  <مقطع هوية='٩٤٥٣٢'>يَكُوْنُ فِي مِثْلِ حَاْلِهِ لَوْ كَسَّرْتَهُ لِلْجَمْعِ</مقطع>
  <مقطع هوية='٠٣٥٠٩'>وَيَكُوْنُ خَاْمِسُهُ يَاْءً قَبْلَهَا حَرْفٌ مَكْسُوْرٌ</مقطع>
  <مقطع هوية='٦٥٦٤٤'>كَمَا يَكُوْنُ ذٰلِكَ لَوْ كَسَّرْتَهُ لِلْجَمْعِ وَيَكُوْنُ ثَاْلِثُهُ حَرْفَ لِيْنٍ</مقطع>
  <مقطع هوية='٦٧٨١٠'>كَمَا يَكُوْنُ ثَاْلِثُهُ فِي الْجَمْعِ حَرْفَ لِيْنٍ</مقطع>
  <مقطع هوية='٨٧٧٠٣'>غَيْرَ أْنَّ ثَاْلِثَهُ فِي الْجَمْعِ أَلِفٌ وَثَاْلِثُهُ فِي التَّصْغِيْرِ يَاْءٌ</مقطع>
  <مقطع هوية='٧٨٥١٣'>وَأَوَّلُهُ فِي الْجَمْعِ مَفْتُوْحٌ وَفِي التَّصْغِيْرِ مَضْمُوْمٌ</مقطع>
  <مقطع هوية='٢٩٩٦١'>وَإنَّمَا فُعِلَ ذٰلِكَ لِأَنَّك تُكَسِّرُ الِاْسْمَ فِي التَّحْقِيْرِ</مقطع>
  <مقطع هوية='٨٣٧٦٠'>كَمَا تُكَسِّرُهُ فِي الْجَمْعِ</مقطع>
  <مقطع هوية='١٦٠٠٣'>فَأَرَاْدُوْا أَنْ يُفَرِّقُوْا بَيْنَ عِلْمِ التَّصْغِيْرِ وَالْجَمْعِ</مقطع>

