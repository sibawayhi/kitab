     رقم="٢٨">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ مَا يُخْتَارُ فِيْهِ النَّصْبُ</مقطع>
    <مقطع رقم="٢">وَلَيْسَ قَبْلَهُ مَنْصُوْبٌ بُنِيَ عَلَى الْفِعْلِ</مقطع>
    <مقطع رقم="٣">وَهُوَ بَابُ الِاسْتِفْهَامِ</مقطع>
  </عنوان>
  <مقطع رقم="٤">وَذٰلِكَ أَنَّ مِنَ الْحُرُوْفِ</مقطع>
  <مقطع رقم="٥">حُرُوْفًا لَا يُذْكَرُ بَعْدَهَا إِلَّا الْفِعْلُ</مقطع>
  <مقطع رقم="٦">وَلَا يَكُوْنُ الَّذِيْ يَلِيْهَا</مقطع>
  <مقطع رقم="٧">غَيْرُهُ مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع رقم="٨">فَمِمَّا لَا يَلِيْهِ الْفِعْلُ إِلَّا مُظْهَرًا</مقطع>
  <مقطع رقم="٩">
    <حرف>قَدْ</حرف>
  </مقطع>
  <مقطع رقم="١٠">وَ <حرف>سَوْفَ</حرف>
  </مقطع>
  <مقطع رقم="١١">وَ <حرف>لَمًّا</حرف>
  </مقطع>
  <مقطع رقم="١٢">وَنَحُوهُنَّ</مقطع>
  <مقطع رقم="١٣">فَإِنُ اضْطُرَّ شَاعِرٌ</مقطع>
  <مقطع رقم="١٤">فَقَدَّمَ الاسْمَ</مقطع>
  <مقطع رقم="١٥">وَقَدْ أَوْقَعَ الْفَعْلَ</مقطع>
  <مقطع رقم="١٦">عَلَى شَيْءٍ مِنَ سَبَبِهِ</مقطع>
  <مقطع رقم="١٧">لَمْ يَكُنْ حَدُّ الْإِعْرَابِ إِلَّا النَّصْبَ</مقطع>
  <مقطع رقم="١٨">وَذٰلِكَ نَحْوُ</مقطع>
  <مقطع رقم="١٩">
    <قول رقم="١">لَمْ زَيْدًا أَضْرِبْهُ</قول>
  </مقطع>
  <مقطع رقم="٢٠">إِذَا اضْطُرَّ شَاعِرٌ</مقطع>
  <مقطع رقم="٢١">فَقَدَّمَ</مقطع>
  <مقطع رقم="٢٢">لَمْ يَكَنْ إِلَّا الْنَّصْبُ</مقطع>
  <مقطع رقم="٢٣">في <حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٤">لَيْسَ غَيْرُ</مقطع>
  <مقطع رقم="٢٥">لَوْ كَانَ في شِعْرٍ</مقطع>
  <مقطع رقم="٢٦">لِأَنَّهُ يُضْمِرُ الْفَعْلَ</مقطع>
  <مقطع رقم="٢٧">إِذَا كَانَ لَيْسَ مِمَّا يَلِيْهِ الْاسْمُ</مقطع>
  <مقطع رقم="٢٨">كَمَا فَعَلُوْا ذٰلِكَ في مَوَاضِعَ</مقطع>
  <مقطع رقم="٢٩">سَتَرَاهَا إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٣٠">وَأَمَّا مَا يَجُوْزُ فِيْهِ الْفِعْلُ</مقطع>
  <مقطع رقم="٣١">مُضْمَرًا ومُظْهَرًا</مقطع>
  <مقطع رقم="٣٢">مُقَدَّمًا وَمُؤَخَّرًا</مقطع>
  <مقطع رقم="٣٣">وَلَا يَسْتَقِيْمُ أَنْ يُبْتَدَأَ بَعْدَهُ الْأَسْمَاءُ</مقطع>
  <مقطع رقم="٣٤">فً‍ <حرف>هَلًّا</حرف>
  </مقطع>
  <مقطع رقم="٣٥">وَ <حرف>لَوْلًا</حرف>
  </مقطع>
  <مقطع رقم="٣٦">وَ <حرف>لَوْمًا</حرف>
  </مقطع>
  <مقطع رقم="٣٧">وَ <حرف>أَلًّا</حرف>
  </مقطع>
  <مقطع رقم="٣٨">لَوْ قُلْتَ</مقطع>
  <مقطع رقم="٣٩">
    <قول رقم="٢">هَلَّا زَيْدًا ضَرَبْتَ</قول>
  </مقطع>
  <مقطع رقم="٤٠">وَ<قول رقم="٣">لَوْلَا زَيْدًا ضَرَبْتَ</قول>
  </مقطع>
  <مقطع رقم="٤١">وَ<قول رقم="٤">أَلَّا زَيْدًا قَتَلْتَ</قول>
  </مقطع>
  <مقطع رقم="٤٢">جَازَ</مقطع>
  <مقطع رقم="٤٣">وَلَوْ قُلْتَ</مقطع>
  <مقطع رقم="٤٤">
    <قول رقم="٥">أَلَّا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤٥">وَ<قول رقم="٦">هَلَّا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤٦">عَلَىَ إِضْمَارِ الْفِعْلِ</مقطع>
  <مقطع رقم="٤٧">وَلَا تَذْكُرُهُ</مقطع>
  <مقطع رقم="٤٨">جَازَ</مقطع>
  <مقطع رقم="٤٩">وَإِنَّمَا جَازَ ذٰلِكَ</مقطع>
  <مقطع رقم="٥٠">لِأَنَّ فِيْهِ مَعْنَى التَّحْضِيْضِ وَالْأَمْرِ</مقطع>
  <مقطع رقم="٥١">فَجَازَ فِيْهِ مِمَّا يَجُوْزُ في ذٰلِكَ</مقطع>
  <مقطع رقم="٥٢">وَلَوْ قُلْتَ</مقطع>
  <مقطع رقم="٥٣">
    <قول رقم="٧">سَوْفَ زَيْدًا أَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="٥٤">لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٥٥">أَوْ <قول رقم="٨">قَدْ زَيْدًا لَقَيْتُ</قول>
  </مقطع>
  <مقطع رقم="٥٦">لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٥٧">لِأَنَّهَا إِنَّمَا وُضِعَتْ لِلْأَفْعَالِ</مقطع>
  <مقطع رقم="٥٨">إِلَّا أَنَّهُ جَازَ في تِلْكَ الْأَحْرُفِ</مقطع>
  <مقطع رقم="٥٩">التَّأْخِيْرُ وَالْإِضْمَارُ</مقطع>
  <مقطع رقم="٦٠">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٦١">مِنَ التَّحْضِيْضِ وَالْأَمْرِ</مقطع>
  <مقطع رقم="٦٢">وَحُرُوْفُ الِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٦٣">كَذٰلِكَ <بدل>
  <متن مصدر="ها">لَا يَلِيْهَا إِلَا الْفِعْلُ</متن>
  <بك>لَا يَلِيْهَا إِلَا الْفِعْلُ</بك>
  <يع>بُنِيَتْ لِلْفِعْلِ</يع>
</بدل>
  </مقطع>
  <مقطع رقم="٦٤">إِلَّا أَنَّهُمْ قَدْ تَوَسَّعُوْا فِيْهًا</مقطع>
  <مقطع رقم="٦٥">فَابْتَدَءُوا بَعْدَهَا الْأَسْمَاءَ</مقطع>
  <مقطع رقم="٦٦">وَالْأَصْلُ غَيْرُ ذٰلِكَ</مقطع>
  <مقطع رقم="٦٧">أَلَا تَرَىَ</مقطع>
  <مقطع رقم="٦٨">أَنَّهُمْ يَقُوْلُوْنَ</مقطع>
  <مقطع رقم="٦٩">
    <قول رقم="٩">هَلْ زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٧٠">وَ<قول رقم="١٠">هَلْ زَيْدٌ في الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٧١">وَ<قول رقم="١١">كَيْفَ زَيْدٌ آخِذٌ</قول>
  </مقطع>
  <مقطع رقم="٧٢">فَإِنْ قُلْتَ</مقطع>
  <مقطع رقم="٧٣">
    <قول رقم="١٢">هَلْ زَيْدًا رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٧٤">وَ<قول رقم="١٣">هَلْ زَيْدٌ ذَهَبَ</قول>
  </مقطع>
  <مقطع رقم="٧٥">قَبُحَ وَلَمْ يَجُزْ</مقطع>
  <مقطع رقم="٧٦">إِلَّا فَىِ الْشِّعْرِ</مقطع>
  <مقطع رقم="٧٧">لِأَنَّهُ</مقطع>
  <!-- <قاعدة> -->
  <مقطع رقم="٧٨">لَمَّا اجْتَمَعَ الِاسْمُ وَالْفِعْلُ</مقطع>
  <مقطع رقم="٧٩">حَمَلُوْهُ عَلَى الْأَصْلِ</مقطع>
  <!-- </قاعدة> -->
  <مقطع رقم="٨٠">فَإِن اُضْطُرَّ شَاعِرٌ</مقطع>
  <مقطع رقم="٨١">فَقَدَّمَ الِاسْمَ</مقطع>
  <مقطع رقم="٨٢">نَصَبَ</مقطع>
  <مقطع رقم="٨٣">كَمَا كُنْتَ فَاعِلًا ذٰلِكَ</مقطع>
  <مقطع رقم="٨٤">بِ‍ <حرف>قَدْ</حرف> وَنَحْوِهًا</مقطع>
  <مقطع رقم="٨٥">وَهُوَ فِي هِٰذِهِ أَحْسَنُ</مقطع>
  <مقطع رقم="٨٦">لِأَنَّهُ يُبْتَدَأُ بَعْدَهَا الْأَسْمَاءُ</مقطع>
  <مقطع رقم="٨٧">وَإِنَّمَا فَعَلُوْا ذَٰلِكَ بِالِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٨٨">لِأَنَّهُ كَالْأَمْرِ</مقطع>
  <مقطع رقم="٨٩">فَىِ أَنَّهُ غَيْرُ وَاجِبٍ</مقطع>
  <مقطع رقم="٩٠">وَأَنَّهُ يُرِيْدُ بِهِ مِنَ الْمُخَاطَبِ</مقطع>
  <مقطع رقم="٩١">أَمْرًا لَمْ يَسْتَقِرَّ عَنْدَ السَّائِلِ</مقطع>
  <مقطع رقم="٩٢">أَلَا تَرَى أَنَّ جَوَابَهُ جَزْمٌ</مقطع>
  <مقطع رقم="٩٣">فَلِهٰذَا اخْتِيْرَ النَّصْبُ</مقطع>
  <مقطع رقم="٩٤">وَكَرِهُوا تَقْدِيْمَ الِاسْمِ</مقطع>
  <مقطع رقم="٩٥">لِأَنَّهَا حُرُوْفٌ ضَارَعَتْ بِمَا بَعْدَهًا</مقطع>
  <مقطع رقم="٩٦">مَا بَعْدَ حُرُوْفِ الْجَزَاءِ</مقطع>
  <مقطع رقم="٩٧">وَجَوَابُهَا كَجَوابِهِ</مقطع>
  <مقطع رقم="٩٨">وَقَدْ يَصِيْرُ مَعْنَى حَدِيْثُهَا إِلَيْهِ</مقطع>
  <مقطع رقم="٩٩">وَهِيَ غَيْرُ وَاجِبَةٍ</مقطع>
  <مقطع رقم="١٠٠">كَالْجَزَاءِ</مقطع>
  <مقطع رقم="١٠١">فَقَبُحَ تَقْدِيْمُ الِاسْمِ لِهٰذًا</مقطع>
  <مقطع رقم="١٠٢">أَلَا تَرَى</مقطع>
  <مقطع رقم="١٠٣">أَنَّكَ إِذَا قُلْتَ</مقطع>
  <مقطع رقم="١٠٤">
    <قول رقم="١٤">أَيْنَ عَبْدُ اللّٰهِ آَتِهِ</قول>
  </مقطع>
  <مقطع رقم="١٠٥">فَكَأَنَّكَ قُلْتَ</مقطع>
  <مقطع رقم="١٠٦">
    <قول رقم="١٥">حَيْثُمَا يَكُنْ آتِهِ</قول>
  </مقطع>
  <مقطع رقم="١٠٧">وَأَمَّا الْأَلِفُ</مقطع>
  <مقطع رقم="١٠٨">فَتَقْدِيْمُ الاسْمِ فِيْهَا قَبْلَ الْفِعْلِ</مقطع>
  <مقطع رقم="١٠٩">جَائِزٌ</مقطع>
  <مقطع رقم="١١٠">كَمَا جَازَ ذٰلِكَ في <حرف>هَلًّا</حرف>
  </مقطع>
  <مقطع رقم="١١١">وَذٰلِكَ لِأَنَّهَا حَرْفُ الِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="١١٢">الَّذِى لَا يَزُوْلُ عَنْهُ إِلَى غَيْرِهِ</مقطع>
  <مقطع رقم="١١٣">وَلَيْسَ لِلِاسْتِفْهَامِ في الْأَصْلِ غَيْرُهُ</مقطع>
  <مقطع رقم="١١٤">وَإِنَّمَا تَرَكُوْا الْأَلِفَ</مقطع>
  <مقطع رقم="١١٥">في <حرف>مَنْ</حرف>
  </مقطع>
  <مقطع رقم="١١٦">وَ <حرف>مَتَىَ</حرف>
  </مقطع>
  <مقطع رقم="١١٧">وَ <حرف>هَلْ</حرف>
  </مقطع>
  <مقطع رقم="١١٨">وَنَحْوِهِنَّ</مقطع>
  <مقطع رقم="١١٩">حَيْثُ أَمِنُوْا الِالْتِبَاسَ</مقطع>
  <مقطع رقم="١٢٠">أَلَا تَرَى</مقطع>
  <مقطع رقم="١٢١">أَنَّكَ تُدْخِلُهَا عَلَى <حرف>مَنْ</حرف>
  </مقطع>
  <مقطع رقم="١٢٢">إِذَا تَمَّتْ بِصِلَتِهَا</مقطع>
  <مقطع رقم="١٢٣">كَقَوْلِ الْلَّهْ عَزَّ وَجَلَّ <آية>أَفَمَنْ يُلْقَى في النَّارِ خَيْرٌ أَمَّنْ يَاتِى آمِنا يَوْمَ الْقِيَامِةِ</آية>
  </مقطع>
  <مقطع رقم="١٢٤">وَتَقُوْلُ</مقطع>
  <مقطع رقم="١٢٥">
    <حرف>أَمْ هَلْ</حرف>
  </مقطع>
  <مقطع رقم="١٢٦">فَإِنَّمَا هِىَ بِمَنْزِلَةِ <حرف>قَدْ</حرف>
  </مقطع>
  <مقطع رقم="١٢٧">وَلَٰكِنَّهُمْ تَرَكُوْا الْأَلِفَ اسْتِغْنَاءً</مقطع>
  <مقطع رقم="١٢٨">إِذْ كَانَ هٰذَا الْكَلَامُ</مقطع>
  <مقطع رقم="١٢٩">لَا يَقَعُ إِلَّا في الِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="١٣٠">وَسَوْفَ تَرَاهُ</مقطع>
  <مقطع رقم="١٣١">إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٣٢">مُتَبَيِّنَا أَيْضًا</مقطع>
  <مقطع رقم="١٣٣">فَهِيَ هِٰهُنًا</مقطع>
  <مقطع رقم="١٣٤">بِمَنْزِلَةِ <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع رقم="١٣٥">في بَابِ الْجَزَاءِ</مقطع>
  <مقطع رقم="١٣٦">فَجَازَ تَقْدِيْمُ الِاسْمِ فِيْهًا</مقطع>
  <مقطع رقم="١٣٧">كَمَا جَازَ في قَوْلِكَ</مقطع>
  <مقطع رقم="١٣٨">
    <قول رقم="١٦">إَنِ اللّٰهُ أَمْكَنَنِي مِنْ فُلَانٍ فَعَلْتُ كَذَا وَكَذًا</قول>
  </مقطع>
  <مقطع رقم="١٣٩">وَيُخْتَارُ فِيْهَا النَّصْبُ</مقطع>
  <مقطع رقم="١٤٠">لِأَنَّكَ تُضْمِرُ الْفِعْلَ فِيْهًا</مقطع>
  <مقطع رقم="١٤١">لِأَنَّ الْفِعْلَ أَوْلَى</مقطع>
  <مقطع رقم="١٤٢">إِذَا اجْتَمَعَ هُوَ وَالِاسْمُ</مقطع>
  <مقطع رقم="١٤٣">وَكَذٰلِكَ كُنْتَ فَاعِلًا في <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع رقم="١٤٤">لِأنَّهَا إِنَّمَا هِىَ لِلْفِعْلِ</مقطع>
  <مقطع رقم="١٤٥">وَسَتَرَى بَيَانَ ذٰلِكَ</مقطع>
  <مقطع رقم="١٤٦">إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٤٧">فَالْأَلِفُ</مقطع>
  <مقطع رقم="١٤٨">إِذَا كَانَ مَعَهَا فِعْلٌ</مقطع>
  <مقطع رقم="١٤٩">بِمَنْزِلَةِ <حرف>لَوْلًا</حرف>
  </مقطع>
  <مقطع رقم="١٥٠">وَ <حرف>هَلًّا</حرف>
  </مقطع>
  <مقطع رقم="١٥١">إِلَّا أَنَّكَ</مقطع>
  <مقطع رقم="١٥٢">إِنْ شِئْتَ رَفَعْتَ فِيْهَا</مقطع>
  <مقطع رقم="١٥٣">
    <بدل>
      <متن مصدر="يع">وَالرَّفْعُ مَعَ الْأَلِفِ</متن>
      <ها>وَهُوَ في الْأَلِفِ</ها>
    </بدل>
  </مقطع>
  <مقطع رقم="١٥٤">أَمْثَلُ مِنْهُ في <حرف>مَتَى</حرف>
  </مقطع>
  <مقطع رقم="١٥٥">وَنَحْوِهًا</مقطع>
  <مقطع رقم="١٥٦">لِأَنَّهُ قَدْ صَارَ فِيْهًا</مقطع>
  <مقطع رقم="١٥٧">مَعَ أَنَّكَ تَبْتَدِئُ بَعْدَهَا الْأَسْمَاءَ</مقطع>
  <مقطع رقم="١٥٨">أَنَّكَ تُقَدِّمُ الاسْمَ قَبْلَ الْفِعْلِ</مقطع>
  <مقطع رقم="١٥٩">وَالْرَّفْعُ فِيْهَا عَلَىَ الْجَوَازِ</مقطع>
  <مقطع رقم="١٦٠">وَلَا يَجُوْزُ ذٰلِكَ</مقطع>
  <مقطع رقم="١٦١">في <حرف>هَلًّا</حرف>
  </مقطع>
  <مقطع رقم="١٦٢">وَ <حرف>لَوْلًا</حرف>
  </مقطع>
  <مقطع رقم="١٦٣">لِأَنَّهُ لَا يُبْتَدَأُ بَعْدَهُمَا الْأَسْمَاءُ</مقطع>
  <مقطع رقم="١٦٤">وَلَيْسَ جَوَازُ الرَّفْعِ في الْأَلِفِ</مقطع>
  <مقطع رقم="١٦٥">مِثْلَ جَوَازِ الرَّفْعِ في</مقطع>
  <مقطع رقم="١٦٦">
    <قول رقم="١٧">ضَرَبْتُ زَيْدًا وَعَمْرًا كَلَّمْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٦٧">لِأَنَّهُ لَيْسَ هَاهُنَا</مقطع>
  <مقطع رقم="١٦٨">حَرْفٌ هُوَ بِالْفِعْلِ أَوْلَى</مقطع>
  <مقطع رقم="١٦٩">وَإِنَّمَا اخْتِيْرَ هٰذَا</مقطع>
  <مقطع رقم="١٧٠">عَلَىَ الْجَوَازِ</مقطع>
  <مقطع رقم="١٧١">وَلِيَكُونَ مَعْنًى وَاحِدًا</مقطع>
  <مقطع رقم="١٧٢">فَهٰذَا أَقْوَى</مقطع>
  <مقطع رقم="١٧٣">وَالَّذِى يُشْبِهُهُ مِنْ حُرُوْفِ الاسْتِفْهَامِ الْأَلِفُ</مقطع>
  <مقطع رقم="١٧٤">وَاعْلَمْ أَنَّ حُرُوْفَ الاسْتِفْهَامِ</مقطع>
  <مقطع رقم="١٧٥">كُلُّهَا يَقْبُحُ</مقطع>
  <مقطع رقم="١٧٦">أَنْ يَصِيرَ بَعْدَهَا الِاسْمُ</مقطع>
  <مقطع رقم="١٧٧">إِذَا كَانَ الْفِعْلُ بَعْدَ الْاسْمُ</مقطع>
  <مقطع رقم="١٧٨">لَوْ قُلْتَ <قول رقم="١٨">هَلْ زَيْدٌ قَامَ</قول>
  </مقطع>
  <مقطع رقم="١٧٩">وَ<قول رقم="١٩">أَيْنَ زَيْدٌ ضَرَبْتَهُ</قول>
  </مقطع>
  <مقطع رقم="١٨٠">لَمْ يَجُزْ إِلَّا في الشِّعْرِ</مقطع>
  <مقطع رقم="١٨١">فَإِذَا جَاءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="١٨٢">نَصَبْتَهُ إِلَّا الْأَلْفَ</مقطع>
  <مقطع رقم="١٨٣">فَإِنَّهُ يَجُوْزُ فِيْهًا</مقطع>
  <مقطع رقم="١٨٤">الرَّفْعُ وَالنَّصْبُ</مقطع>
  <مقطع رقم="١٨٥">لِأَنَّ الْأَلِفَ</مقطع>
  <مقطع رقم="١٨٦">قَدْ يُبْتَدَأَ بَعْدَهَا الِاسْمُ</مقطع>
  <مقطع رقم="١٨٧">فَإِنْ جِئْتَ في سَائِرِ حُرُوْفِ الاسْتِفْهَامِ بِاسْمٍ</مقطع>
  <مقطع رقم="١٨٨">وَبَعْدَ ذٰلِكَ الِاسْمِ اسْمٌ مِنْ فِعْلٍ</مقطع>
  <مقطع رقم="١٨٩">نَحْوُ <حرف>ضَارِبٌ</حرف>
  </مقطع>
  <مقطع رقم="١٩٠">جَازَ في الْكَلَامِ</مقطع>
  <مقطع رقم="١٩١">وَلَا يَجُوْزُ فِيْهِ الْنَّصْبُ</مقطع>
  <مقطع رقم="١٩٢">إِلّا في الْشَّعَرِ</مقطع>
  <مقطع رقم="١٩٣">لَوْ قُلْتَ</مقطع>
  <مقطع رقم="١٩٤">
    <قول رقم="٢٠">هَلْ زَيْدٌ أَنَا ضَارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٩٥">لَكَانَ جَيِّدًا فِي الْكَلَامِ</مقطع>
  <مقطع رقم="١٩٦">لِأَنَّ <حرف>ضَارِبًا</حرف> اسْمٌ</مقطع>
  <مقطع رقم="١٩٧">وَإِنْ كَانَ في مَعْنَىً الْفِعْلِ</مقطع>
  <مقطع رقم="١٩٨">وَيَجُوْزُ النَّصْبُ فِي الشِّعْرِ</مقطع>
