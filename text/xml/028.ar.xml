<!--   <يع>بُنِيَتْ لِلْفِعْلِ</يع> -->
<!-- </بدل> -->
  </مقطع>
  <مقطع هوية='١٢٥٣٨'>إِلَّا أَنَّهُمْ قَدْ تَوَسَّعُوْا فِيْهَا</مقطع>
  <مقطع هوية='٣٤٩٨٢'>فَابْتَدَؤُوْا بَعْدَهَا الْأَسْمَاْءَ</مقطع>
  <مقطع هوية='٢٨٣٧٥'>وَالْأَصْلُ غَيْرُ ذٰلِكَ</مقطع>
  <مقطع هوية='٠٧٧١١'>أَلَا تَرَى أَنَّهُمْ يَقُوْلُوْنَ</مقطع>
  <مقطع هوية='٢٢٨٠٠'>
    <قول هوية='٣٢٣٣٩'>هَلْ زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٩٠٠٨٧'>وَ<قول هوية='٥٣٨٧٩'>هَلْ زَيْدٌ في الدَّارِ</قول>
  </مقطع>
  <مقطع هوية='٦٣١٨٦'>وَ<قول هوية='٤٩١٧٣'>كَيْفَ زَيْدٌ آخِذٌ</قول>
  </مقطع>
  <مقطع هوية='٣٤٤٤٥'>فَإِنْ قُلْتَ</مقطع>
  <مقطع هوية='٠٢٤٤٠'>
    <قول هوية='٦٢٨٥٢'>هَلْ زَيْدًا رَأَيْتَ</قول>
  </مقطع>
  <مقطع هوية='٤٨٨٤٥'>وَ<قول هوية='٦٣٩١٣'>هَلْ زَيْدٌ ذَهَبَ</قول>
  </مقطع>
  <مقطع هوية='٥٩٨٧٩'>قَبُحَ وَلَمْ يَجُزْ إِلَّا فَىِ الشِّعْرِ</مقطع>
  <مقطع هوية='٦٠٥٥٨'>لِأَنَّهُ لَمَّا اجْتَمَعَ الِاسْمُ وَالْفِعْلُ حَمَلُوْهُ عَلَى الْأَصْلِ</مقطع>
  <مقطع هوية='١٥٣٥٩'>فَإِنُ اضْطُرَّ شَاْعِرٌ فَقَدَّمَ الِاسْمَ نَصَبَ</مقطع>
  <مقطع هوية='٤٥٣٩٢'>كَمَا كُنْتَ فَاْعِلًا ذٰلِكَ بِـ<حرف>قَدْ</حرف> وَنَحْوِهَا</مقطع>
  <مقطع هوية='٥٨٩٦٩'>وَهُوَ فِي هِٰذِهِ أَحْسَنُ</مقطع>
  <مقطع هوية='٧٥٧٩٨'>لِأَنَّهُ يُبْتَدَأُ بَعْدَهَا الْأَسْمَاْءُ</مقطع>
  <مقطع هوية='٩٨٨٥٩'>وَإِنَّمَا فَعَلُوْا ذٰلِكَ بِالِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٥٢٨١١'>لِأَنَّهُ كَالْأَمْرِ فِي أَنَّهُ غَيْرُ وَاْجِبٍ</مقطع>
  <مقطع هوية='٨٢٧٤٥'>وَأَنَّهُ يُرِيْدُ بِهِ مِنَ الْمُخَاطَبِ أَمْرًا لَمْ يَسْتَقِرَّ عَنْدَ السَّاْئِلِ</مقطع>
  <مقطع هوية='٤٧٥٣٧'>أَلَا تَرَى أَنَّ جَوَاْبَهُ جَزْمٌ</مقطع>
  <مقطع هوية='٦٥٣٠٣'>فَلِهٰذَا اخْتِيْرَ النَّصْبُ</مقطع>
  <مقطع هوية='٧٦٠٦١'>وَكَرِهُوا تَقْدِيْمَ الِاسْمِ</مقطع>
  <مقطع هوية='٠٣١٦٤'>لِأَنَّهَا حُرُوْفٌ ضَاْرَعَتْ بِمَا بَعْدَهَا</مقطع>
  <مقطع هوية='٠٥٥٨١'>مَا بَعْدَ حُرُوْفِ الْجَزَاْءِ</مقطع>
  <مقطع هوية='٩٦٥٤٤'>وَجَوَاْبُهَا كَجَوَاْبِهِ</مقطع>
  <مقطع هوية='٣٥٨٧٩'>وَقَدْ يَصِيْرُ مَعْنَى حَدِيْثُهَا إِلَيْهِ</مقطع>
  <مقطع هوية='٨٩٦٣١'>وَهِيَ غَيْرُ وَاْجِبَةٍ كَالْجَزَاْءِ</مقطع>
  <مقطع هوية='٦٣٣٩٥'>فَقَبُحَ تَقْدِيْمُ الِاسْمِ لِهٰذَا</مقطع>
  <مقطع هوية='١٥٤٣٠'>أَلَا تَرَى أَنَّكَ إِذَا قُلْتَ <قول هوية='٩٦٠٩٦'>أَيْنَ عَبْدُ اللّٰهِ آتِهِ</قول>
  </مقطع>
  <مقطع هوية='٥٤٢٣٦'>فَكَأَنَّكَ قُلْتَ <قول هوية='٦٢٢٨٧'>حَيْثُمَا يَكُنْ آتِهِ</قول>
  </مقطع>
  <مقطع هوية='٠٤٠٩٩'>وَأَمَّا الْأَلِفُ فَتَقْدِيْمُ الاسْمِ فِيْهَا قَبْلَ الْفِعْلِ جَاْئِزٌ</مقطع>
  <مقطع هوية='٨٢٤٩٠'>كَمَا جَاْزَ ذٰلِكَ في <حرف>هَلَّا</حرف>
  </مقطع>
  <مقطع هوية='٨٩٢٠٧'>وَذٰلِكَ لِأَنَّهَا حَرْفُ الِاسْتِفْهَاْمِ الَّذِى لَا يَزُوْلُ عَنْهُ إِلَى غَيْرِهِ</مقطع>
  <مقطع هوية='٧٨١٤٥'>وَلَيْسَ لِلِاسْتِفْهَاْمِ في الْأَصْلِ غَيْرُهُ</مقطع>
  <مقطع هوية='٠٢٦١٦'>وَإِنَّمَا تَرَكُوْا الْأَلِفَ فِي <حرف>مَنْ</حرف> وَ<حرف>مَتَى</حرف> وَ<حرف>هَلْ</حرف> وَنَحْوِهِنَّ</مقطع>
  <مقطع هوية='٣٩٣٤٧'>حَيْثُ أَمِنُوْا الِالْتِبَاْسَ</مقطع>
  <مقطع هوية='٨٠٦٢٥'>أَلَا تَرَى أَنَّكَ تُدْخِلُهَا عَلَى <حرف>مَنْ</حرف> إِذَا تَمَّتْ بِصِلَتِهَا</مقطع>
  <مقطع هوية='٦٤٦٨٤'>كَقَوْلِ اللَّهِ عَزَّ وَجَلَّ</مقطع>
  <مقطع هوية='٥٥٩٨٩'>
    <آية هوية='٦٩٣٢٣' سورة="٤١" آية="٤٠">أَفَمَنْ يُلْقَىٰ فِي النَّارِ خَيْرٌ أَم مَّنْ يَأْتِي ءَامِنًا يَوْمَ الْقِيَـٰمَةِ</آية>
  </مقطع>
  <مقطع هوية='١٩٢٦٧'>وَتَقُوْلُ <حرف>أَمْ هَلْ</حرف>
  </مقطع>
  <مقطع هوية='٠٤٩٤٧'>فَإِنَّمَا هِىَ بِمَنْزِلَةِ <حرف>قَدْ</حرف>
  </مقطع>
  <مقطع هوية='٣٠٢٠٠'>وَلَٰكِنَّهُمْ تَرَكُوْا الْأَلِفَ اسْتِغْنَاْءً</مقطع>
  <مقطع هوية='٦٨٥٧٢'>إِذْ كَاْنَ هٰذَا الْكَلَامُ لَا يَقَعُ إِلَّا في الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٤٠٧٣٠'>وَسَوْفَ تَرَاْهُ إِنْ شَاْءَ اللّٰهُ مُتَبَيِّنًا أَيْضًا</مقطع>
  <مقطع هوية='٨٥٢٥٤'>فَهِيَ هِٰهُنَا بِمَنْزِلَةِ <حرف>إِنْ</حرف> في بَاْبِ الْجَزَاْءِ</مقطع>
  <مقطع هوية='٧٩٨٧٧'>فَجَاْزَ تَقْدِيْمُ الِاسْمِ فِيْهَا كَمَا جَاْزَ في قَوْلِكَ</مقطع>
  <مقطع هوية='٦٨٦١٦'>
    <قول هوية='٢٨٣٤٧'>إَنِ اللّٰهُ أَمْكَنَنِي مِنْ فُلَاْنٍ فَعَلْتُ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع هوية='٤٨٠٤١'>وَيُخْتَاْرُ فِيْهَا النَّصْبُ لِأَنَّكَ تُضْمِرُ الْفِعْلَ فِيْهَا</مقطع>
  <مقطع هوية='١٠٢٩٧'>لِأَنَّ الْفِعْلَ أَوْلَى إِذَا اجْتَمَعَ هُوَ وَالِاسْمُ</مقطع>
  <مقطع هوية='٩٠٨٨٤'>وَكَذٰلِكَ كُنْتَ فَاْعِلًا في <حرف>إِنْ</حرف> لِأنَّهَا إِنَّمَا هِىَ لِلْفِعْلِ</مقطع>
  <مقطع هوية='٧٩٨٠٤'>وَسَتَرَى بَيَاْنَ ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع هوية='٦٠٤٢٨'>فَالْأَلِفُ إِذَا كَاْنَ مَعَهَا فِعْلٌ بِمَنْزِلَةِ <حرف>لَوْلَا</حرف> وَ<حرف>هَلَّا</حرف>
  </مقطع>
  <مقطع هوية='٥٣٥٣٤'>إِلَّا أَنَّكَ إِنْ شِئْتَ رَفَعْتَ فِيْهَا</مقطع>
  <مقطع هوية='٢١٣٦٤'>وَالرَّفْعُ مَعَ الْأَلِفِ
    <!-- <بدل> -->
    <!--   <متن مصدر="يع">وَالرَّفْعُ مَعَ الْأَلِفِ</متن> -->
    <!--   <ها>وَهُوَ في الْأَلِفِ</ها> -->
    <!-- </بدل> -->
  أَمْثَلُ مِنْهُ فِي <حرف>مَتَى</حرف> وَنَحْوِهَا</مقطع>
  <مقطع هوية='٩٤١١٣'>لِأَنَّهُ قَدْ صَاْرَ فِيْهَا (مَعَ أَنَّكَ تَبْتَدِئُ بَعْدَهَا الْأَسْمَاْءَ)</مقطع>
  <مقطع هوية='٢٩٣٠٨'>أَنَّكَ تُقَدِّمُ الاسْمَ قَبْلَ الْفِعْلِ</مقطع>
  <مقطع هوية='٠٥٦٦٨'>وَالرَّفْعُ فِيْهَا عَلَى الْجَوَاْزِ</مقطع>
  <مقطع هوية='٨٣٥٠٨'>وَلَا يَجُوْزُ ذٰلِكَ في <حرف>هَلَّا</حرف> وَ<حرف>لَوْلَا</حرف>
  </مقطع>
  <مقطع هوية='٠٨٣٨٢'>لِأَنَّهُ لَا يُبْتَدَأُ بَعْدَهُمَا الْأَسْمَاْءُ</مقطع>
  <مقطع هوية='٢٦٦١٩'>وَلَيْسَ جَوَاْزُ الرَّفْعِ في الْأَلِفِ مِثْلَ جَوَازِ الرَّفْعِ في</مقطع>
  <مقطع هوية='١٦٢٨٦'>
    <قول هوية='٤١٥٦١'>ضَرَبْتُ زَيْدًا وَعَمْرًا كَلَّمْتُهُ</قول>
  </مقطع>
  <مقطع هوية='١٤٤١١'>لِأَنَّهُ لَيْسَ هٰهُنَا حَرْفٌ هُوَ بِالْفِعْلِ أَوْلَى</مقطع>
  <مقطع هوية='٨٥٤٥٨'>وَإِنَّمَا اخْتِيْرَ هٰذَا عَلَى الْجَوَاْزِ</مقطع>
  <مقطع هوية='٨٨٠٤٦'>وَلِيَكُوْنَ مَعْنًى وَاْحِدًا</مقطع>
  <مقطع هوية='٩٤٢٩١'>فَهٰذَا أَقْوَى</مقطع>
  <مقطع هوية='١١١٤٤'>وَالَّذِى يُشْبِهُهُ مِنْ حُرُوْفِ الاسْتِفْهَاْمِ الْأَلِفُ</مقطع>
  <مقطع هوية='٠٦٧٤٤'>وَاعْلَمْ أَنَّ حُرُوْفَ الاسْتِفْهَاْمِ كُلَّهَا</مقطع>
  <مقطع هوية='٧٣٤٢٠'>يَقْبُحُ أَنْ يَصِيْرَ بَعْدَهَا الِاسْمُ إِذَا كَانَ الْفِعْلُ بَعْدَ الِاسْمِ</مقطع>
  <مقطع هوية='٧١٢٦٢'>لَوْ قُلْتَ <قول هوية='٢٨١١٨'>هَلْ زَيْدٌ قَاْمَ</قول>
  </مقطع>
  <مقطع هوية='٨٩٩٣١'>وَ<قول هوية='٧٢٢٥١'>أَيْنَ زَيْدٌ ضَرَبْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٠٩٩١٠'>لَمْ يَجُزْ إِلَّا فِي الشِّعْرِ</مقطع>
  <مقطع هوية='٧٤٥٩٧'>فَإِذَا جَاْءَ فِي الشِّعْرِ نَصَبْتَهُ إِلَّا الْأَلِفَ</مقطع>
  <مقطع هوية='٩٢٦٩٢'>فَإِنَّهُ يَجُوْزُ فِيْهَا الرَّفْعُ وَالنَّصْبُ</مقطع>
  <مقطع هوية='٦٠٠٤٣'>لِأَنَّ الْأَلِفَ قَدْ يُبْتَدَأُ بَعْدَهَا الِاسْمُ</مقطع>
  <مقطع هوية='٤٤٢٢٢'>فَإِنْ جِئْتَ فِي سَاْئِرِ حُرُوْفِ الاسْتِفْهَاْمِ بِاسْمٍ</مقطع>
  <مقطع هوية='٧٠٢٩٩'>وَبَعْدَ ذٰلِكَ الِاسْمِ اسْمٌ مِنْ فِعْلٍ نَحْوَ <حرف>ضَارِبٍ</حرف>
  </مقطع>
  <مقطع هوية='١٣٤٢٥'>جَاْزَ في الْكَلَاْمِ</مقطع>
  <مقطع هوية='٧٠١٣٠'>وَلَا يَجُوْزُ فِيْهِ النَّصْبُ إِلَّا فِي الشِّعْرِ</مقطع>
  <مقطع هوية='٠١٤٧٥'>لَوْ قُلْتَ <قول هوية='٣٥٠٩١'>هَلْ زَيْدٌ أَنَا ضَاْرِبُهُ</قول>
  </مقطع>
  <مقطع هوية='٧٩٩١٤'>لَكَاْنَ جَيِّدًا فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٢٥٨٦٩'>لِأَنَّ <حرف>ضَاْرِبًا</حرف> اسْمٌ وَإِنْ كَاْنَ في مَعْنَى الْفِعْلِ</مقطع>
  <مقطع هوية='٠٦٤٤٨'>وَيَجُوْزُ النَّصْبُ فِي الشِّعْرِ</مقطع>
