  <عنوان>
    <مقطع هوية='٤٥٤٦٩'>هٰذَا بَاْبُ مَا يُخْتَاْرُ فِيْهِ النَّصْبُ</مقطع>
    <مقطع هوية='٢٥١١٤'>وَلَيْسَ قَبْلَهُ مَنْصُوْبٌ بُنِيَ عَلَى الْفِعْلِ</مقطع>
    <مقطع هوية='٢٩٠٨١'>وَهُوَ بَاْبُ الِاسْتِفْهَاْمِ</مقطع>
  </عنوان>
  <مقطع هوية='٣٧٩٨٤'>وَذٰلِكَ أَنَّ مِنَ الْحُرُوْفِ</مقطع>
  <مقطع هوية='٧١٩١٧'>حُرُوْفًا لَا يُذْكَرُ بَعْدَهَا إِلَّا الْفِعْلُ</مقطع>
  <مقطع هوية='٨٨٣٠٦'>وَلَا يَكُوْنُ الَّذِي يَلِيْهَا غَيْرَهُ</مقطع>
  <مقطع هوية='٧٢٥٩٧'>مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع هوية='٩١٥٩٧'>فَمِمَّا لَا يَلِيْهِ الْفِعْلُ إِلَّا مُظْهَرًا</مقطع>
  <مقطع هوية='٨٢٣٧٧'>
  <حرف>قَدْ</حرف> وَ<حرف>سَوْفَ</حرف> وَ<حرف>لَمَّا</حرف> وَنَحْوُهُنَّ</مقطع>
  <مقطع هوية='٨٩٨٦٢'>فَإِنُ اضْطُرَّ شَاْعِرٌ فَقَدَّمَ الِاسْمَ</مقطع>
  <مقطع هوية='٥٧٧٤٣'>وَقَدْ أَوْقَعَ الْفِعْلَ عَلَى شَيْءٍ مِن سَبَبِهِ</مقطع>
  <مقطع هوية='٦٣٠٠٧'>لَمْ يَكُنْ حَدُّ الْإِعْرَاْبِ إِلَّا النَّصْبَ</مقطع>
  <مقطع هوية='٣١٤٩٨'>وَذٰلِكَ نَحْوُ <قول هوية='٤٥٣٧١'>لَمْ زَيْدًا أَضْرِبْهُ</قول>
  </مقطع>
  <مقطع هوية='٣٥٤٣٠'>[إِذَا اضْطُرَّ شَاعِرٌ فَقَدَّمَ</مقطع>
  <مقطع هوية='٠٤٣١٤'>لَمْ يَكَنْ إِلَّا الْنَّصْبُ في <حرف>زَيْدٍ</حرف> لَيْسَ غَيْرُ</مقطع>
  <مقطع هوية='٩٧٩٢٣'>لَوْ كَانَ في شِعْرٍ]</مقطع>
  <مقطع هوية='٦٣٢٤٧'>لِأَنَّهُ يُضْمِرُ الْفَعْلَ</مقطع>
  <مقطع هوية='٥٩٠٣٨'>إِذَا كَانَ لَيْسَ مِمَّا يَلِيْهِ الْاسْمُ</مقطع>
  <مقطع هوية='٥٤٦٧١'>كَمَا فَعَلُوْا ذٰلِكَ في مَوَاضِعَ</مقطع>
  <مقطع هوية='٢٧٤٤٩'>سَتَرَاهَا إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع هوية='٥٤٩٧٣'>وَأَمَّا مَا يَجُوْزُ فِيْهِ الْفِعْلُ</مقطع>
  <مقطع هوية='٣٣٨٧٣'>مُضْمَرًا ومُظْهَرًا</مقطع>
  <مقطع هوية='٣٨٩٩٨'>مُقَدَّمًا وَمُؤَخَّرًا</مقطع>
  <مقطع هوية='٥٧٠٣٣'>وَلَا يَسْتَقِيْمُ أَنْ يُبْتَدَأَ بَعْدَهُ الْأَسْمَاءُ</مقطع>
  <مقطع هوية='٦٧٢٢٥'>فَـ<حرف>هَلَّا</حرف> وَ<حرف>لَوْلَا</حرف> وَ<حرف>لَوْمَا</حرف> وَ<حرف>أَلَّا</حرف>
  </مقطع>
  <مقطع هوية='١٩٤٧٤'>لَوْ قُلْتَ</مقطع>
  <مقطع هوية='٦٣٢٤١'>
    <قول هوية='٤٥٢٦٥'>هَلَّا زَيْدًا ضَرَبْتَ</قول>
  </مقطع>
  <مقطع هوية='٤٢٤٩٠'>وَ<قول هوية='٧٥٨٥٨'>لَوْلَا زَيْدًا ضَرَبْتَ</قول>
  </مقطع>
  <مقطع هوية='٤٧٥٣٠'>وَ<قول هوية='٦٨٤٦٦'>أَلَّا زَيْدًا قَتَلْتَ</قول>
  </مقطع>
  <مقطع هوية='٧٣٨٤١'>جَاْزَ</مقطع>
  <مقطع هوية='٨٦٧٥٦'>وَلَوْ قُلْتَ <قول هوية='٢٩٦٣٦'>أَلَّا زَيْدًا</قول> وَ<قول هوية='٢٦٩٤٣'>هَلَّا زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٤٠٤٦٩'>عَلَىَ إِضْمَاْرِ الْفِعْلِ وَلَا تَذْكُرُهُ</مقطع>
  <مقطع هوية='٦٢١٣٩'>جَاْزَ</مقطع>
  <مقطع هوية='٣٠٠٥٣'>وَإِنَّمَا جَاْزَ ذٰلِكَ لِأَنَّ فِيْهِ مَعْنَى التَّحْضِيْضِ وَالْأَمْرِ</مقطع>
  <مقطع هوية='١٨٠٤٤'>فَجَاْزَ فِيْهِ مِمَّا يَجُوْزُ في ذٰلِكَ</مقطع>
  <مقطع هوية='٢٤٧٥٠'>وَلَوْ قُلْتَ <قول هوية='٠٢٠٦٤'>سَوْفَ زَيْدًا أَضْرِبُ</قول> لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية='٦٩٤٣٧'>أَوْ <قول هوية='٦٦٣١٠'>قَدْ زَيْدًا لَقِيْتُ</قول> لَمْ يَحْسُنْ</مقطع>
  <مقطع هوية='٤٦٥٢٨'>لِأَنَّهَا إِنَّمَا وُضِعَتْ لِلْأَفْعَاْلِ</مقطع>
  <مقطع هوية='٠١٧٥٣'>إِلَّا أَنَّهُ جَاْزَ في تِلْكَ الْأَحْرُفِ التَّأْخِيْرُ وَالْإِضْمَاْرُ</مقطع>
  <مقطع هوية='٣٠٦٠١'>لِمَا ذَكَرْتُ لَكَ مِنَ التَّحْضِيْضِ وَالْأَمْرِ</مقطع>
  <مقطع هوية='٥٢٨١٨'>وَحُرُوْفُ الِاسْتِفْهَامِ كَذٰلِكَ لَا يَلِيْهَا إِلَا الْفِعْلُ
<!--   <بدل> -->
