<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٥٠"
     درنبورج="١-٣٦"
     البكاء="١-١٧٠"
     هارون="١-٩٨"
     يعقوب="١-١٥٣"
     رقم="٢٨">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يُخْتَاْرُ فِيْهِ النَّصْبُ</مقطع>
    <مقطع رقم="٢">وَلَيْسَ قَبْلَهُ مَنْصُوْبٌ بُنِيَ عَلَى الْفِعْلِ</مقطع>
    <مقطع رقم="٣">وَهُوَ بَاْبُ الِاسْتِفْهَاْمِ</مقطع>
  </عنوان>
  <مقطع رقم="٤">وَذٰلِكَ أَنَّ مِنَ الْحُرُوْفِ</مقطع>
  <مقطع رقم="٥">حُرُوْفًا لَا يُذْكَرُ بَعْدَهَا إِلَّا الْفِعْلُ</مقطع>
  <مقطع رقم="٦">وَلَا يَكُوْنُ الَّذِي يَلِيْهَا غَيْرَهُ</مقطع>
  <مقطع رقم="٧">مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع رقم="٨">فَمِمَّا لَا يَلِيْهِ الْفِعْلُ إِلَّا مُظْهَرًا</مقطع>
  <مقطع رقم="٩">
  <حرف>قَدْ</حرف> وَ<حرف>سَوْفَ</حرف> وَ<حرف>لَمَّا</حرف> وَنَحْوُهُنَّ</مقطع>
  <مقطع رقم="١٠">فَإِنُ اضْطُرَّ شَاْعِرٌ فَقَدَّمَ الِاسْمَ</مقطع>
  <مقطع رقم="١١">وَقَدْ أَوْقَعَ الْفِعْلَ عَلَى شَيْءٍ مِن سَبَبِهِ</مقطع>
  <مقطع رقم="١٢">لَمْ يَكُنْ حَدُّ الْإِعْرَاْبِ إِلَّا النَّصْبَ</مقطع>
  <مقطع رقم="١٣">وَذٰلِكَ نَحْوُ <قول رقم="١">لَمْ زَيْدًا أَضْرِبْهُ</قول>
  </مقطع>
  <مقطع رقم="١٤">[إِذَا اضْطُرَّ شَاعِرٌ فَقَدَّمَ</مقطع>
  <مقطع رقم="١٥">لَمْ يَكَنْ إِلَّا الْنَّصْبُ في <حرف>زَيْدٍ</حرف> لَيْسَ غَيْرُ</مقطع>
  <مقطع رقم="١٦">لَوْ كَانَ في شِعْرٍ]</مقطع>
  <مقطع رقم="١٧">لِأَنَّهُ يُضْمِرُ الْفَعْلَ</مقطع>
  <مقطع رقم="١٨">إِذَا كَانَ لَيْسَ مِمَّا يَلِيْهِ الْاسْمُ</مقطع>
  <مقطع رقم="١٩">كَمَا فَعَلُوْا ذٰلِكَ في مَوَاضِعَ</مقطع>
  <مقطع رقم="٢٠">سَتَرَاهَا إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٢١">وَأَمَّا مَا يَجُوْزُ فِيْهِ الْفِعْلُ</مقطع>
  <مقطع رقم="٢٢">مُضْمَرًا ومُظْهَرًا</مقطع>
  <مقطع رقم="٢٣">مُقَدَّمًا وَمُؤَخَّرًا</مقطع>
  <مقطع رقم="٢٤">وَلَا يَسْتَقِيْمُ أَنْ يُبْتَدَأَ بَعْدَهُ الْأَسْمَاءُ</مقطع>
  <مقطع رقم="٢٥">فَـ<حرف>هَلَّا</حرف> وَ<حرف>لَوْلَا</حرف> وَ<حرف>لَوْمَا</حرف> وَ<حرف>أَلَّا</حرف>
  </مقطع>
  <مقطع رقم="٢٦">لَوْ قُلْتَ</مقطع>
  <مقطع رقم="٢٧">
    <قول رقم="٢">هَلَّا زَيْدًا ضَرَبْتَ</قول>
  </مقطع>
  <مقطع رقم="٢٨">وَ<قول رقم="٣">لَوْلَا زَيْدًا ضَرَبْتَ</قول>
  </مقطع>
  <مقطع رقم="٢٩">وَ<قول رقم="٤">أَلَّا زَيْدًا قَتَلْتَ</قول>
  </مقطع>
  <مقطع رقم="٣٠">جَاْزَ</مقطع>
  <مقطع رقم="٣١">وَلَوْ قُلْتَ <قول رقم="٥">أَلَّا زَيْدًا</قول> وَ<قول رقم="٦">هَلَّا زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٢">عَلَىَ إِضْمَاْرِ الْفِعْلِ وَلَا تَذْكُرُهُ</مقطع>
  <مقطع رقم="٣٣">جَاْزَ</مقطع>
  <مقطع رقم="٣٤">وَإِنَّمَا جَاْزَ ذٰلِكَ لِأَنَّ فِيْهِ مَعْنَى التَّحْضِيْضِ وَالْأَمْرِ</مقطع>
  <مقطع رقم="٣٥">فَجَاْزَ فِيْهِ مِمَّا يَجُوْزُ في ذٰلِكَ</مقطع>
  <مقطع رقم="٣٦">وَلَوْ قُلْتَ <قول رقم="٧">سَوْفَ زَيْدًا أَضْرِبُ</قول> لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٣٧">أَوْ <قول رقم="٨">قَدْ زَيْدًا لَقِيْتُ</قول> لَمْ يَحْسُنْ</مقطع>
  <مقطع رقم="٣٨">لِأَنَّهَا إِنَّمَا وُضِعَتْ لِلْأَفْعَاْلِ</مقطع>
  <مقطع رقم="٣٩">إِلَّا أَنَّهُ جَاْزَ في تِلْكَ الْأَحْرُفِ التَّأْخِيْرُ وَالْإِضْمَاْرُ</مقطع>
  <مقطع رقم="٤٠">لِمَا ذَكَرْتُ لَكَ مِنَ التَّحْضِيْضِ وَالْأَمْرِ</مقطع>
  <مقطع رقم="٤١">وَحُرُوْفُ الِاسْتِفْهَامِ كَذٰلِكَ <بدل>
  <متن مصدر="ها">لَا يَلِيْهَا إِلَا الْفِعْلُ</متن>
  <بك>لَا يَلِيْهَا إِلَا الْفِعْلُ</بك>
  <يع>بُنِيَتْ لِلْفِعْلِ</يع>
</بدل>
  </مقطع>
  <مقطع رقم="٤٢">إِلَّا أَنَّهُمْ قَدْ تَوَسَّعُوْا فِيْهَا</مقطع>
  <مقطع رقم="٤٣">فَابْتَدَؤُوْا بَعْدَهَا الْأَسْمَاْءَ</مقطع>
  <مقطع رقم="٤٤">وَالْأَصْلُ غَيْرُ ذٰلِكَ</مقطع>
  <مقطع رقم="٤٥">أَلَا تَرَى أَنَّهُمْ يَقُوْلُوْنَ</مقطع>
  <مقطع رقم="٤٦">
    <قول رقم="٩">هَلْ زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٤٧">وَ<قول رقم="١٠">هَلْ زَيْدٌ في الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٤٨">وَ<قول رقم="١١">كَيْفَ زَيْدٌ آخِذٌ</قول>
  </مقطع>
  <مقطع رقم="٤٩">فَإِنْ قُلْتَ</مقطع>
  <مقطع رقم="٥٠">
    <قول رقم="١٢">هَلْ زَيْدًا رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٥١">وَ<قول رقم="١٣">هَلْ زَيْدٌ ذَهَبَ</قول>
  </مقطع>
  <مقطع رقم="٥٢">قَبُحَ وَلَمْ يَجُزْ إِلَّا فَىِ الشِّعْرِ</مقطع>
  <مقطع رقم="٥٣">لِأَنَّهُ لَمَّا اجْتَمَعَ الِاسْمُ وَالْفِعْلُ حَمَلُوْهُ عَلَى الْأَصْلِ</مقطع>
  <مقطع رقم="٥٤">فَإِنُ اضْطُرَّ شَاْعِرٌ فَقَدَّمَ الِاسْمَ نَصَبَ</مقطع>
  <مقطع رقم="٥٥">كَمَا كُنْتَ فَاْعِلًا ذٰلِكَ بِـ<حرف>قَدْ</حرف> وَنَحْوِهَا</مقطع>
  <مقطع رقم="٥٦">وَهُوَ فِي هِٰذِهِ أَحْسَنُ</مقطع>
  <مقطع رقم="٥٧">لِأَنَّهُ يُبْتَدَأُ بَعْدَهَا الْأَسْمَاْءُ</مقطع>
  <مقطع رقم="٥٨">وَإِنَّمَا فَعَلُوْا ذٰلِكَ بِالِاسْتِفْهَاْمِ</مقطع>
  <مقطع رقم="٥٩">لِأَنَّهُ كَالْأَمْرِ فِي أَنَّهُ غَيْرُ وَاْجِبٍ</مقطع>
  <مقطع رقم="٦٠">وَأَنَّهُ يُرِيْدُ بِهِ مِنَ الْمُخَاطَبِ أَمْرًا لَمْ يَسْتَقِرَّ عَنْدَ السَّاْئِلِ</مقطع>
  <مقطع رقم="٦١">أَلَا تَرَى أَنَّ جَوَاْبَهُ جَزْمٌ</مقطع>
  <مقطع رقم="٦٢">فَلِهٰذَا اخْتِيْرَ النَّصْبُ</مقطع>
  <مقطع رقم="٦٣">وَكَرِهُوا تَقْدِيْمَ الِاسْمِ</مقطع>
  <مقطع رقم="٦٤">لِأَنَّهَا حُرُوْفٌ ضَاْرَعَتْ بِمَا بَعْدَهَا</مقطع>
  <مقطع رقم="٦٥">مَا بَعْدَ حُرُوْفِ الْجَزَاْءِ</مقطع>
  <مقطع رقم="٦٦">وَجَوَاْبُهَا كَجَوَاْبِهِ</مقطع>
  <مقطع رقم="٦٧">وَقَدْ يَصِيْرُ مَعْنَى حَدِيْثُهَا إِلَيْهِ</مقطع>
  <مقطع رقم="٦٨">وَهِيَ غَيْرُ وَاْجِبَةٍ كَالْجَزَاْءِ</مقطع>
  <مقطع رقم="٦٩">فَقَبُحَ تَقْدِيْمُ الِاسْمِ لِهٰذَا</مقطع>
  <مقطع رقم="٧٠">أَلَا تَرَى أَنَّكَ إِذَا قُلْتَ <قول رقم="١٤">أَيْنَ عَبْدُ اللّٰهِ آتِهِ</قول>
  </مقطع>
  <مقطع رقم="٧١">فَكَأَنَّكَ قُلْتَ <قول رقم="١٥">حَيْثُمَا يَكُنْ آتِهِ</قول>
  </مقطع>
  <مقطع رقم="٧٢">وَأَمَّا الْأَلِفُ فَتَقْدِيْمُ الاسْمِ فِيْهَا قَبْلَ الْفِعْلِ جَاْئِزٌ</مقطع>
  <مقطع رقم="٧٣">كَمَا جَاْزَ ذٰلِكَ في <حرف>هَلَّا</حرف>
  </مقطع>
  <مقطع رقم="٧٤">وَذٰلِكَ لِأَنَّهَا حَرْفُ الِاسْتِفْهَاْمِ الَّذِى لَا يَزُوْلُ عَنْهُ إِلَى غَيْرِهِ</مقطع>
  <مقطع رقم="٧٥">وَلَيْسَ لِلِاسْتِفْهَاْمِ في الْأَصْلِ غَيْرُهُ</مقطع>
  <مقطع رقم="٧٦">وَإِنَّمَا تَرَكُوْا الْأَلِفَ فِي <حرف>مَنْ</حرف> وَ<حرف>مَتَى</حرف> وَ<حرف>هَلْ</حرف> وَنَحْوِهِنَّ</مقطع>
  <مقطع رقم="٧٧">حَيْثُ أَمِنُوْا الِالْتِبَاْسَ</مقطع>
  <مقطع رقم="٧٨">أَلَا تَرَى أَنَّكَ تُدْخِلُهَا عَلَى <حرف>مَنْ</حرف> إِذَا تَمَّتْ بِصِلَتِهَا</مقطع>
  <مقطع رقم="٧٩">كَقَوْلِ اللَّهِ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="٨٠">
    <آية سورة="٤١" آية="٤٠">أَفَمَنْ يُلْقَىٰ فِي النَّارِ خَيْرٌ أَم مَّنْ يَأْتِي ءَامِنًا يَوْمَ الْقِيَـٰمَةِ</آية>
  </مقطع>
  <مقطع رقم="٨١">وَتَقُوْلُ <حرف>أَمْ هَلْ</حرف>
  </مقطع>
  <مقطع رقم="٨٢">فَإِنَّمَا هِىَ بِمَنْزِلَةِ <حرف>قَدْ</حرف>
  </مقطع>
  <مقطع رقم="٨٣">وَلَٰكِنَّهُمْ تَرَكُوْا الْأَلِفَ اسْتِغْنَاْءً</مقطع>
  <مقطع رقم="٨٤">إِذْ كَاْنَ هٰذَا الْكَلَامُ لَا يَقَعُ إِلَّا في الِاسْتِفْهَاْمِ</مقطع>
  <مقطع رقم="٨٥">وَسَوْفَ تَرَاْهُ إِنْ شَاْءَ اللّٰهُ مُتَبَيِّنًا أَيْضًا</مقطع>
  <مقطع رقم="٨٦">فَهِيَ هِٰهُنَا بِمَنْزِلَةِ <حرف>إِنْ</حرف> في بَاْبِ الْجَزَاْءِ</مقطع>
  <مقطع رقم="٨٧">فَجَاْزَ تَقْدِيْمُ الِاسْمِ فِيْهَا كَمَا جَاْزَ في قَوْلِكَ</مقطع>
  <مقطع رقم="٨٨">
    <قول رقم="١٦">إَنِ اللّٰهُ أَمْكَنَنِي مِنْ فُلَاْنٍ فَعَلْتُ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع رقم="٨٩">وَيُخْتَاْرُ فِيْهَا النَّصْبُ لِأَنَّكَ تُضْمِرُ الْفِعْلَ فِيْهَا</مقطع>
  <مقطع رقم="٩٠">لِأَنَّ الْفِعْلَ أَوْلَى إِذَا اجْتَمَعَ هُوَ وَالِاسْمُ</مقطع>
  <مقطع رقم="٩١">وَكَذٰلِكَ كُنْتَ فَاْعِلًا في <حرف>إِنْ</حرف> لِأنَّهَا إِنَّمَا هِىَ لِلْفِعْلِ</مقطع>
  <مقطع رقم="٩٢">وَسَتَرَى بَيَاْنَ ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع رقم="٩٣">فَالْأَلِفُ إِذَا كَاْنَ مَعَهَا فِعْلٌ بِمَنْزِلَةِ <حرف>لَوْلَا</حرف> وَ<حرف>هَلَّا</حرف>
  </مقطع>
  <مقطع رقم="٩٤">إِلَّا أَنَّكَ إِنْ شِئْتَ رَفَعْتَ فِيْهَا</مقطع>
  <مقطع رقم="٩٥">
    <بدل>
      <متن مصدر="يع">وَالرَّفْعُ مَعَ الْأَلِفِ</متن>
      <ها>وَهُوَ في الْأَلِفِ</ها>
  </بدل> أَمْثَلُ مِنْهُ فِي <حرف>مَتَى</حرف> وَنَحْوِهَا</مقطع>
  <مقطع رقم="٩٦">لِأَنَّهُ قَدْ صَاْرَ فِيْهَا (مَعَ أَنَّكَ تَبْتَدِئُ بَعْدَهَا الْأَسْمَاْءَ)</مقطع>
  <مقطع رقم="٩٧">أَنَّكَ تُقَدِّمُ الاسْمَ قَبْلَ الْفِعْلِ</مقطع>
  <مقطع رقم="٩٨">وَالرَّفْعُ فِيْهَا عَلَى الْجَوَاْزِ</مقطع>
  <مقطع رقم="٩٩">وَلَا يَجُوْزُ ذٰلِكَ في <حرف>هَلَّا</حرف> وَ<حرف>لَوْلَا</حرف>
  </مقطع>
  <مقطع رقم="١٠٠">لِأَنَّهُ لَا يُبْتَدَأُ بَعْدَهُمَا الْأَسْمَاْءُ</مقطع>
  <مقطع رقم="١٠١">وَلَيْسَ جَوَاْزُ الرَّفْعِ في الْأَلِفِ مِثْلَ جَوَازِ الرَّفْعِ في</مقطع>
  <مقطع رقم="١٠٢">
    <قول رقم="١٧">ضَرَبْتُ زَيْدًا وَعَمْرًا كَلَّمْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٠٣">لِأَنَّهُ لَيْسَ هٰهُنَا حَرْفٌ هُوَ بِالْفِعْلِ أَوْلَى</مقطع>
  <مقطع رقم="١٠٤">وَإِنَّمَا اخْتِيْرَ هٰذَا عَلَى الْجَوَاْزِ</مقطع>
  <مقطع رقم="١٠٥">وَلِيَكُوْنَ مَعْنًى وَاْحِدًا</مقطع>
  <مقطع رقم="١٠٦">فَهٰذَا أَقْوَى</مقطع>
  <مقطع رقم="١٠٧">وَالَّذِى يُشْبِهُهُ مِنْ حُرُوْفِ الاسْتِفْهَاْمِ الْأَلِفُ</مقطع>
  <مقطع رقم="١٠٨">وَاعْلَمْ أَنَّ حُرُوْفَ الاسْتِفْهَاْمِ كُلَّهَا</مقطع>
  <مقطع رقم="١٠٩">يَقْبُحُ أَنْ يَصِيْرَ بَعْدَهَا الِاسْمُ إِذَا كَانَ الْفِعْلُ بَعْدَ الِاسْمِ</مقطع>
  <مقطع رقم="١١٠">لَوْ قُلْتَ <قول رقم="١٨">هَلْ زَيْدٌ قَاْمَ</قول>
  </مقطع>
  <مقطع رقم="١١١">وَ<قول رقم="١٩">أَيْنَ زَيْدٌ ضَرَبْتَهُ</قول>
  </مقطع>
  <مقطع رقم="١١٢">لَمْ يَجُزْ إِلَّا فِي الشِّعْرِ</مقطع>
  <مقطع رقم="١١٣">فَإِذَا جَاْءَ فِي الشِّعْرِ نَصَبْتَهُ إِلَّا الْأَلِفَ</مقطع>
  <مقطع رقم="١١٤">فَإِنَّهُ يَجُوْزُ فِيْهَا الرَّفْعُ وَالنَّصْبُ</مقطع>
  <مقطع رقم="١١٥">لِأَنَّ الْأَلِفَ قَدْ يُبْتَدَأُ بَعْدَهَا الِاسْمُ</مقطع>
  <مقطع رقم="١١٦">فَإِنْ جِئْتَ فِي سَاْئِرِ حُرُوْفِ الاسْتِفْهَاْمِ بِاسْمٍ</مقطع>
  <مقطع رقم="١١٧">وَبَعْدَ ذٰلِكَ الِاسْمِ اسْمٌ مِنْ فِعْلٍ نَحْوَ <حرف>ضَارِبٍ</حرف>
  </مقطع>
  <مقطع رقم="١١٨">جَاْزَ في الْكَلَاْمِ</مقطع>
  <مقطع رقم="١١٩">وَلَا يَجُوْزُ فِيْهِ النَّصْبُ إِلَّا فِي الشِّعْرِ</مقطع>
  <مقطع رقم="١٢٠">لَوْ قُلْتَ <قول رقم="٢٠">هَلْ زَيْدٌ أَنَا ضَاْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٢١">لَكَاْنَ جَيِّدًا فِي الْكَلَاْمِ</مقطع>
  <مقطع رقم="١٢٢">لِأَنَّ <حرف>ضَاْرِبًا</حرف> اسْمٌ وَإِنْ كَاْنَ في مَعْنَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٢٣">وَيَجُوْزُ النَّصْبُ فِي الشِّعْرِ</مقطع>
