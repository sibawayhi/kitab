     رقم="٦٥">

    <عنوان>
       <مقطع هوية='١٢٧٥٦'>هٰذَا بَاْبُ مَا يَنْتَصِبُ عَلَى إِضْمَاْرِ الفِعْلِ الْمَتْرُوْكِ إِظْهَاْرُه مِنَ الْمَصَاْدِرِ فِي غَيْرِ الدُّعَاْءِ</مقطع>
   </عنوان>
    <مقطع هوية='٧٠٢٧٥'>من ذٰلِكَ قَوْلُكَ <قول هوية='٥٢١٨٢'>حَمْدًا وَشُكْرًا لَا كُفْرًا</قول>
   </مقطع>
    <مقطع هوية='٩١٤٣٥'>وَ<قول هوية='٧٥٥٢١'>عَجَبًا</قول>
   </مقطع>
   <مقطع هوية='٧١٦٣١'>وَ<قول هوية='٢٢٥١٧'>أَفْعَلُ ذٰلِكَ</قول></مقطع>
   <مقطع هوية='٥٩٣١٦'>وَ<قول هوية='٦٥٧٣٦'>كَرَاْمَةً</قول></مقطع>
   <مقطع هوية='٤٨٧٧٨'>وَ<قول هوية='٣٢٦٣٠'>مَسَرَّةً</قول></مقطع>
   <مقطع هوية='٦٥٣٣٨'>وَ<قول هوية='٦٤٧٧٣'>نُعْمَةَ عَيْنٍ</قول></مقطع>
   <مقطع هوية='٤٢٩٨٠'>وَ<قول هوية='٣٢٧٩٩'>حُبًّا</قول></مقطع>
   <مقطع هوية='٤٥٩٨٤'>وَ<قول هوية='١٨٦٧٥'>نَعَاْمَ عَيْنٍ</قول></مقطع>
    <مقطع هوية='٢٥١٠٣'>وَ<قول هوية='٥٢٣٥٦'>لَا أَفْعَلُ ذَاْكَ وَلَا كَيْدًا وَلَا هَمًّا</قول></مقطع>
    <مقطع هوية='٤٨١٤٩'>وَ<قول هوية='٣٣٥٦٨'>لَأَفْعَلَنَّ ذَاْكَ وَرَغْمًا وَهَوَاْنًا</قول></مقطع>
    <مقطع هوية='٢٩٠١١'>فَإِنَّمَا يَنْتَصِبُ هٰذَا عَلَى إِضْمَاْرِ الْفِعْلِ</مقطع>
    <مقطع هوية='٩٦٣٠٤'>كَأَنَّكَ قُلْتَ <قول هوية='٨٦٨٥٤'>أَحْمَدُ اللهَ حَمْدًا</قول>
   </مقطع>
    <مقطع هوية='٥٤٥٨٢'>وَ<قول هوية='٥٨٩٨٦'>أَشْكُرُ اللهَ شُكْرًا</قول>
   </مقطع>
    <مقطع هوية='٣٥١٩٤'>وَكَأَنَّكَ قُلْتَ <قول هوية='٢٧٤٥٧'>أَعْجَبُ عَجَبًا</قول>
   </مقطع>
    <مقطع هوية='٨٠٦٣٦'>وَ<قول هوية='٧٤٨٤٩'>أُكْرِمُكَ كَرَاْمَةً</قول>
   </مقطع>
    <مقطع هوية='٣٠٨٢٨'>وَ<قول هوية='٤٨٤٢٣'>أَسُرُّكَ مَسَرَّةً</قول>
   </مقطع>
    <مقطع هوية='٩٨٧٥٨'>وَ<قول هوية='١٣٧٥١'>لَا أَكَاْدُ كَيْدًا</قول>
   </مقطع>
    <مقطع هوية='٥٠٩٣٢'>وَ<قول هوية='٠٠١٣٣'>لَا أَهُمُّ هَمًّا</قول>
   </مقطع>
    <مقطع هوية='١١١٢٥'>وَ<قول هوية='٨٦٣٢٤'>أُرْغِمُكَ رَغْمًا</قول>
   </مقطع>
    <مقطع هوية='٩٨٠٩٣'>وَإِنَّمَا اخْتُزِلَ الْفِعْلُ هٰهُنَا</مقطع>
    <مقطع هوية='٨٩٥٧٩'>لِأَنَّهُمْ جَعَلُوْا هٰذَا بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع هوية='٦٩٠٦٢'>كَمَا فَعَلُوْا ذٰلِكَ فِي بَاْبِ الدُّعَاْءِ</مقطع>
    <مقطع هوية='٨٩١٠٤'>كَأَنَّ قَوْلَكَ  <حرف>حَمْدًا</حرف>  فِي مَوْضِع <قول هوية='٤٤٦٣٥'>أَحْمَدُ اللهَ</قول>
   </مقطع>
    <مقطع هوية='٠٩٠٨١'>وَقَوْلُكَ  <حرف>عَجَبًا</حرف>  مِنْهُ فِي مَوْضِعِ <قول هوية='٦٧١٩٥'>أَعْجَبُ مِنْهُ</قول>
   </مقطع>
    <مقطع هوية='٦٠٢٨٥'>وَقَوْلُهُ  <حرف>وَلَا كَيْدًا</حرف>  فِي مَوْضِعِ <قول هوية='٠٣١٩٢'>وَلَا أَكَاْدُ وَلَا أَهُمُّ</قول>
   </مقطع>
    <مقطع هوية='٩١٨٥٩'>وَقَدْ جَاْءَ بَعْضُ هٰذَا رَفْعًا يُبْتَدَأُ</مقطع>
    <مقطع هوية='٠٥٢٠٠'>ثُمَّ يُبنَى عَلَيْهِ</مقطع>
    <مقطع هوية='١٧٦٩١'>وَزَعَمَ يُوْنُسُ أَنَّ رُؤْبَةَ بْنَ الْعَّجَاْجِ كَاْنَ يُنْشِدُ هٰذَا البَيْتَ رَفْعًا</مقطع>
    <مقطع هوية='٥٠٤٨٩'>وَهُوَ لِبَعْضِ مَذحِجٍ</مقطع>
    <مقطع هوية='٦٨٤٥٥'>وَهُوَ هُنَيُّ بْن أَحمرَ الكِنَاْني</مقطع>
    <شاهدة هوية='١٩٢٥١'>
       <بيت>
          <مصراع>عَجَبٌ لِتلْكَ قَضِيّةً وَإِقَاْمتى</مصراع>
          <مصراع>فيْكمْ عَلَى تِلْكَ القضِيّة أَعْجَبُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٨٠٠٧٣'>وَسَمِعْنَا بَعْضَ الْعَرَبِ الْمَوْثُوْقِ بِهِ يُقَاْل لَهُ <قول هوية='٥٥٢٩٣'>كَيْفَ أَصْبَحْتَ</قول>
   </مقطع>
    <مقطع هوية='٩٤٠٦٢'>فَيَقُوْلُ <قول هوية='٩٨٥٨٤'>حَمْدُ اللهِ وَثَنَاْءٌ عَلَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٨٦٣٦٣'>كَأَنَّهُ يَحْمِلُهُ عَلَى مُضْمَرٍ فِي نِيَّتِهِ هُوَ الْمُظْهَرُ</مقطع>
    <مقطع هوية='٦٣٣٢١'>كَأَنَّهُ يَقُوْلُ <قول هوية='٤٤١٠٦'>أَمْرِي وَشَأْنِي حَمْدُ اللهِ وَثَنَاْءٌ عَلَيْهِ</قول>
   </مقطع>
    <مقطع هوية='٢٠٦٦٥'>وَلَوْ نَصَبَ لَكَاْنَ الَّذِي فِي نَفْسِهِ الْفِعْلَ</مقطع>
    <مقطع هوية='٤٧٥١١'>وَلَمْ يَكُنْ مُبْتَدَأً لِيُبْنَى عَلَيْهِ</مقطع>
    <مقطع هوية='٤٨٥٤٢'>وَلَا لِيَكُوْنَ مَبْنِيًّا عَلَى شَيْءٍ هُوَ مَا أَظْهَرَ</مقطع>
    <مقطع هوية='٠٥٤٣٥'>وَهٰذَا مِثْلُ بَيْتٍ سَمِعْنَاْهُ مِنْ بَعْضِ الْعَرَبِ المَوْثُوْقِ بِهِ يَرْوِيْهِ</مقطع>
    <شاهدة هوية='١٣٢٩١'>
       <بيت>
          <مصراع>فقَاْلَت حَنَاْنٌ مَا أَتى بكَ هٰهُنَا</مصراع>
          <مصراع>أَذَو نَسَبٍ أَمْ أَنْتَ بَاْلحىِّ عَاْرِفُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='٥٧٥٠٩'>لَمْ تُرِدْ  <حرف>حِنَّ</حرف>
   </مقطع>
    <مقطع هوية='٣٥٩٢٨'>وَلٰكِنَّهَا قَاْلَتْ <قول هوية='٧٢٠٣٨'>أَمْرُنَا حَنَاْنٌ</قول>
   </مقطع>
    <مقطع هوية='٩٨٦٠٢'>أَوْ <قول هوية='١٠٣٧٢'>مَا يُصِيْبُنَا حَنَاْنٌ</قول>
   </مقطع>
    <مقطع هوية='٥٨٣٠٦'>وَفِي هٰذَا المَعْنَى كُلِّهِ مَعْنَى النَّصْبِ</مقطع>
    <مقطع هوية='١٢٤٧٥'>وَمِثْلُهُ فِي أَنَّهُ عَلَى الِابْتِدَاْءِ وَلَيْسَ عَلَى فِعْلٍ</مقطع>
    <مقطع هوية='٢١٣٧٩'>قَوْلُهُ عَزَّ وَجَلَّ  <آية هوية='٧٤٨٧٨'>قَاْلُوْا مَعْذِرَةٍ إِلَى رَبِّكُمْ</آية>
   </مقطع>
    <مقطع هوية='٧٩٥٦٦'>لَمْ يُرِيْدُوْا أَنْ يَعْتَذِرُوْا اعْتِذَاْرًا مُسْتَأْنَفًا مِنْ أَمْرٍ لِيْمُوْا عَلَيْهِ</مقطع>
    <مقطع هوية='٣١١٣٣'>وَلٰكِنَّهُم قِيْلَ لَهُمْ <قول هوية='٤٥٢٨٢'>لِمَ تَعِظُوْنَ قَوْمًا</قول>
   </مقطع>
    <مقطع هوية='٣٦٧٢٠'>قَاْلُوْا <قول هوية='٧٧٣٠٤'>مَوْعِظَتُنَا مَعْذِرَةٌ إِلَى رَبِّكُمْ</قول>
   </مقطع>
    <مقطع هوية='٧٩٥٠٢'>وَلَوْ قَاْلَ رَجُلٌ لِرَجُلٍ <قول هوية='١٥٧٢٧'>مَعْذِرَةً إِلَى اللهِ وَإِلَيْكَ مِنْ كَذَا وَكَذَا</قول>
   </مقطع>
    <مقطع هوية='٥١٦٠٣'>يُرِيْد اعْتَذَاْرًا</مقطع>
    <مقطع هوية='٥١٦٥٣'>لَنَصَبَ</مقطع>
     
    <مقطع هوية='٤٢٤٥٦'>وَمِثْل ذٰلِكَ قَوْلُ الشَّاْعِر</مقطع>
    <شاهدة هوية='١٣٩٩٤'>
       <بيت>
          <مصراع>يَشْكُو إِلَىَّ جَمَلِى طُوْلَ السُّرَى</مصراع>
          <مصراع>صَبْرٌ جَمِيْلٌ فَكِلَاْنا مُبْتَلَى</مصراع>
      </بيت>
   </شاهدة>
    <مقطع هوية='١٢٠٣١'>وَالنَّصْبُ أَكْثَرُ وَأَجْوَدُ لِأَنَّهُ يَأْمُرُهُ</مقطع>
    <مقطع هوية='٩٢٣١٤'>وَمَثَلُ الرَّفْعِ  <آية هوية='٥٩٩٣٥'>فصبر جميْل وَاللّٰه المستعَاْن</آية>
   </مقطع>
    <مقطع هوية='٩٤٧٦٢'>كَأَنَّهُ يَقُوْلُ الْأَمْرُ صَبْرٌ جَمَيْلٌ</مقطع>
    <مقطع هوية='٢١٤٢٥'>وَالَّذِي يُرْفَعُ عَلَيْهِ  <حرف>حَنَاْنٌ</حرف>  وَ<حرف>صَبْرٌ</حرف>  وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع هوية='٧٣٩٧٦'>لَا يُسْتَعْمَلُ إِظْهَاْرُهُ</مقطع>
    <مقطع هوية='٧٣١٤٣'>وَتَرْكُ إِظْهَاْرِهِ كَتَرْكِ إِظْهَاْرِ مَا يُنْصَبُ فِيْهِ</مقطع>
    <مقطع هوية='٦٩٣٠٢'>وَمِثْلُهُ قَوْلُ بَعْضِ الْعَرَبِ <قول هوية='٣٥٢٤٥'>مَنْ أَنْتَ زَيْدٌ</قول>
   </مقطع>
    <مقطع هوية='٦٣٠٠٤'>أَيْ <قول هوية='٤٣١٢٩'>مَنْ أَنْتَ كَلَاْمُكَ زَيْدٌ</قول>
   </مقطع>
    <مقطع هوية='٣٦٠٨٢'>فَتَرَكُوْا إِظْهَاْرَ الرَّاْفِعِ</مقطع>
    <مقطع هوية='٢٧٩٥٩'>كَتَرْكِ إِظْهَاْرِ النَّاْصِبِ</مقطع>
    <مقطع هوية='٧١٥٥٦'>وَلِأَنَّ فِيْهِ ذٰلِكَ المَعْنَى</مقطع>
    <مقطع هوية='٠٧٩٧٦'>وَكَاْنَ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع هوية='٧٣٥٢٩'>وَسَنَرَى مِثْلَهُ إِنْ شَاْءَ اللهُ</مقطع>
     

