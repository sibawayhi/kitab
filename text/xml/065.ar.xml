     بلاق="١-١٦٠"
     درنبورج="١-١٣٣"
     البكاء="١-٤٠٢"
     هارون="١-٣١٨"
     يعقوب="١-٣٨٢"
     رقم="٦٥">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ مَا يَنْتَصِبُ عَلَى إِضْمَاْرِ الفِعْلِ الْمَتْرُوْكِ إِظْهَاْرُه مِنَ الْمَصَاْدِرِ فِي غَيْرِ الدُّعَاْءِ</مقطع>
   </عنوان>
    <مقطع رقم="٢">من ذٰلِكَ قَوْلُكَ <قول مثال="١">حَمْدًا وَشُكْرًا لَا كُفْرًا</قول>
   </مقطع>
    <مقطع رقم="٣">وَ<قول مثال="١">عَجَبًا</قول>
   </مقطع>
   <مقطع رقم="٤">وَ<قول مثال="١">أَفْعَلُ ذٰلِكَ</قول></مقطع>
   <مقطع>وَ<قول مثال="١">كَرَاْمَةً</قول></مقطع>
   <مقطع>وَ<قول مثال="١">مَسَرَّةً</قول></مقطع>
   <مقطع>وَ<قول مثال="١">نُعْمَةَ عَيْنٍ</قول></مقطع>
   <مقطع>وَ<قول مثال="١">حُبًّا</قول></مقطع>
   <مقطع>وَ<قول مثال="١">نَعَاْمَ عَيْنٍ</قول></مقطع>
    <مقطع رقم="٥">وَ<قول مثال="١">لَا أَفْعَلُ ذَاْكَ وَلَا كَيْدًا وَلَا هَمًّا</قول></مقطع>
    <مقطع رقم="٦">وَ<قول مثال="١">لَأَفْعَلَنَّ ذَاْكَ وَرَغْمًا وَهَوَاْنًا</قول></مقطع>
    <مقطع رقم="٧">فَإِنَّمَا يَنْتَصِبُ هٰذَا عَلَى إِضْمَاْرِ الْفِعْلِ</مقطع>
    <مقطع رقم="٨">كَأَنَّكَ قُلْتَ <قول>أَحْمَدُ اللّٰهَ حَمْدًا</قول>
   </مقطع>
    <مقطع رقم="٩">وَ<قول>أَشْكُرُ اللّٰهَ شُكْرًا</قول>
   </مقطع>
    <مقطع رقم="١٠">وَكَأَنَّكَ قُلْتَ <قول>أَعْجَبُ عَجَبًا</قول>
   </مقطع>
    <مقطع رقم="١١">وَ<قول>أُكْرِمُكَ كَرَاْمَةً</قول>
   </مقطع>
    <مقطع رقم="١٢">وَ<قول>أَسُرُّكَ مَسَرَّةً</قول>
   </مقطع>
    <مقطع رقم="١٣">وَ<قول>لَا أَكَاْدُ كَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١٤">وَ<قول>لَا أَهُمُّ هَمًّا</قول>
   </مقطع>
    <مقطع رقم="١٥">وَ<قول>أُرْغِمُكَ رَغْمًا</قول>
   </مقطع>
    <مقطع رقم="١٦">وَإِنَّمَا اخْتُزِلَ الْفِعْلُ هٰهُنَا</مقطع>
    <مقطع رقم="١٧">لِأَنَّهُمْ جَعَلُوْا هٰذَا بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع رقم="١٨">كَمَا فَعَلُوْا ذٰلِكَ فِي بَاْبِ الدُّعَاْءِ</مقطع>
    <مقطع رقم="١٩">كَأَنَّ قَوْلَكَ  <حرف>حَمْدًا</حرف>  فِي مَوْضِع <قول>أَحْمَدُ اللّٰهَ</قول>
   </مقطع>
    <مقطع رقم="٢٠">وَقَوْلُكَ  <حرف>عَجَبًا</حرف>  مِنْهُ فِي مَوْضِعِ <قول>أَعْجَبُ مِنْهُ</قول>
   </مقطع>
    <مقطع رقم="٢١">وَقَوْلُهُ  <حرف>وَلَا كَيْدًا</حرف>  فِي مَوْضِعِ <قول>وَلَا أَكَاْدُ وَلَا أَهُمُّ</قول>
   </مقطع>
    <مقطع رقم="٢٢">وَقَدْ جَاْءَ بَعْضُ هٰذَا رَفْعًا يُبْتَدَأُ</مقطع>
    <مقطع رقم="٢٣">ثُمَّ يُبنَى عَلَيْهِ</مقطع>
    <مقطع رقم="٢٤">وَزَعَمَ يُوْنُسُ أَنَّ رُؤْبَةَ بْنَ الْعَّجَاْجِ كَاْنَ يُنْشِدُ هٰذَا البَيْتَ رَفْعًا</مقطع>
    <مقطع رقم="٢٥">وَهُوَ لِبَعْضِ مَذحِجٍ</مقطع>
    <مقطع رقم="٢٦">وَهُوَ هُنَيُّ بْن أَحمرَ الكِنَاْني</مقطع>
    <شاهدة رقم="١" xml:id="٦٥-١">
       <بيت>
          <مصراع>عَجَبٌ لِتلْكَ قَضِيّةً وَإقَاْمتى</مصراع>
          <مصراع>فيكمْ عَلَى تِلْك القضِيّة أَعْجَبُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢٧">وَسَمِعْنَا بَعْضَ الْعَرَبِ الْمَوْثُوْقِ بِهِ يُقَاْل لَهُ <قول>كَيْفَ أَصْبَحْتَ</قول>
   </مقطع>
    <مقطع رقم="٢٨">فَيَقُوْلُ <قول>حَمْدُ اللّٰهِ وَثَنَاْءٌ عَلَيْهِ</قول>
   </مقطع>
    <مقطع رقم="٢٩">كَأَنَّهُ يَحْمِلُهُ عَلَى مُضْمَرٍ فِي نِيَّتِهِ هُوَ الْمُظْهَرُ</مقطع>
    <مقطع رقم="٣٠">كَأَنَّهُ يَقُوْلُ <قول>أَمْرِي وَشَأْنِي حَمْدُ اللّٰهِ وَثَنَاْءٌ عَلَيْهِ</قول>
   </مقطع>
    <مقطع رقم="٣١">وَلَوْ نَصَبَ لَكَاْنَ الَّذِي فِي نَفْسِهِ الْفِعْلَ</مقطع>
    <مقطع رقم="٣٢">وَلَمْ يَكُنْ مُبْتَدَأً لِيُبْنَى عَلَيْهِ</مقطع>
    <مقطع رقم="٣٣">وَلَا لِيَكُوْنَ مَبْنِيًّا عَلَى شَيْءٍ هُوَ مَا أَظْهَرَ</مقطع>
    <مقطع رقم="٣٤">وَهٰذَا مِثْلُ بَيْتٍ سَمِعْنَاهُ مِنْ بَعْضِ الْعَرَبِ المَوْثُوْقِ بِهِ يَرْوِيْهِ</مقطع>
    <شاهدة رقم="٢" xml:id="٦٥-٢">
       <بيت>
          <مصراع>فقَاْلَت حَنَاْنٌ مَا أَتى بك هٰهُنَا</مصراع>
          <مصراع>أَذَو نَسَبٍ أَمْ أَنْتَ بَاْلحىِّ عَاْرِفُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٥">لَمْ تُرِدْ  <حرف>حِنَّ</حرف>
   </مقطع>
    <مقطع رقم="٣٦">وَلٰكِنَّهَا قَاْلَتْ <قول>أَمْرُنَا حَنَاْنٌ</قول>
   </مقطع>
    <مقطع رقم="٣٧">أَوْ <قول>مَا يُصِيْبُنَا حَنَاْنٌ</قول>
   </مقطع>
    <مقطع رقم="٣٨">وَفِي هٰذَا المَعْنَى كُلِّهِ مَعْنَى النَّصْبِ</مقطع>
    <مقطع رقم="٣٩">وَمِثْلُهُ فِي أَنَّهُ عَلَى الِابْتِدَاْءِ وَلَيْسَ عَلَى فِعْلٍ</مقطع>
    <مقطع رقم="٤٠">قَوْلُهُ عَزَّ وَجَلَّ  <آية>قَاْلُوْا مَعْذِرَةٍ أِلَى رَبِّكُمْ</آية>
   </مقطع>
    <مقطع رقم="٤١">لَمْ يُرِيْدُوا أَنْ يَعْتَذِرُوْا اعْتِذَاْرًا مُسْتَأْنَفًا مِنْ أَمْرٍ لِيْمُوْا عَلَيْهِ</مقطع>
    <مقطع رقم="٤٢">وَلٰكِنَّهُم قِيْلَ لَهُمْ <قول>لِمَ تَعِظُوْنَ قَوْمًا</قول>
   </مقطع>
    <مقطع رقم="٤٣">قَاْلُوْا <قول>مَوْعِظَتُنَا مَعْذِرَةٌ إلَى رَبِّكُمْ</قول>
   </مقطع>
    <مقطع رقم="٤٤">وَلَوْ قَاْلَ رَجُلٌ لِرَجُلٍ <قول>مَعْذِرَةً أِلَى اللّٰهِ وَإِلَيْكَ مِنْ كَذَا وَكَذَا</قول>
   </مقطع>
    <مقطع رقم="٤٥">يُرِيْد اعْتَذَاْرًا</مقطع>
    <مقطع رقم="٤٦">لَنَصَبَ</مقطع>
    <هارون مجلد="١" صفحة="٣٢٠"/>
    <مقطع رقم="٤٧">وَمِثْل ذٰلِكَ قَوْلُ الشَّاْعِر</مقطع>
    <شاهدة رقم="٣" xml:id="٦٥-٣">
       <بيت>
          <مصراع>يَشْكُو أِلَىَّ جَمَلِى طُولَ السُّرَى</مصراع>
          <مصراع>صَبْرٌ جَمِيْلٌ فَكِلَاْنا مُبْتَلَى</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٨">وَالنَّصْبُ أَكْثَرُ وَأَجْوَدُ لِأَنَّهُ يَأْمُرُهُ</مقطع>
    <مقطع رقم="٤٩">وَمَثَلُ الرَّفْعِ  <آية>فصبر جميل وَاللّٰه المستعَاْن</آية>
   </مقطع>
    <مقطع رقم="٥٠">كَأَنَّهُ يَقُوْلُ الْأَمْرُ صَبْرٌ جَمَيْلٌ</مقطع>
    <مقطع رقم="٥١">وَالَّذِي يُرْفَعُ عَلَيْهِ  <حرف>حَنَاْنٌ</حرف>  وَ<حرف>صَبْرٌ</حرف>  وَمَا أَشْبَهَ ذٰلِكَ</مقطع>
    <مقطع رقم="٥٢">لَا يُسْتَعْمَلُ إِظْهَاْرُهُ</مقطع>
    <مقطع رقم="٥٣">وَتَرْكُ إِظْهَاْرِهِ كَتَرْكِ إِظْهَاْرِ مَا يُنْصَبُ فِيْهِ</مقطع>
    <مقطع رقم="٥٤">وَمِثْلُهُ قَوْلُ بَعْضِ الْعَرَبِ <قول>مَنْ أَنْتَ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٥٥">أَيْ <قول>مَنْ أَنْتَ كَلَاْمُكَ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٥٦">فَتَرَكُوْا إِظْهَاْرَ الرَّاْفِعِ</مقطع>
    <مقطع رقم="٥٧">كَتَرْكِ إِظْهَاْرِ النَّاْصِبِ</مقطع>
    <مقطع رقم="٥٨">وَلِأَنَّ فِيْهِ ذٰلِكَ المَعْنَى</مقطع>
    <مقطع رقم="٥٩">وَكَاْنَ بَدَلًا مِنَ اللَّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع رقم="٦٠">وَسَنَرَى مِثْلَهُ إِنْ شَاْءَ اللّٰهُ</مقطع>
