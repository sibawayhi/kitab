<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٦٤"
     درنبورج="١-٥٢"
     البكاء="١-١٩٩"
     هارون="١-١٢٧"
     يعقوب="١-١٨٣"
     رقم="٣٢">

  <عنوان>
    <مقطع هوية='٢٣١٩٨'>هٰذَا بَاْبٌ مِنَ الِاسْتِفْهَاْمِ</مقطع>
    <مقطع هوية='٢٦٥٠٢'>يَكُوْنُ الِاسْمُ فِيْهِ رَفْعًا</مقطع>
    <مقطع هوية='٩٦٢٧١'>لِأَنَّكَ تَبْتَدِئُهُ لِتُنَبِّهَ الْمُخَاْطَبَ</مقطع>
    <مقطع هوية='٩١٦٧٦'>ثُمَّ تَسْتَفْهِمُ بَعْدَ ذٰلِكَ</مقطع>
  </عنوان>
  <مقطع هوية='٢٠٣٣٤'>وَذٰلِكَ قَوْلُكَ  <قول هوية='١٣٦١٤'>زَيْدٌ كَمْ مَرَّةً رَأَيْتَهُ</قول></مقطع>
  <مقطع هوية='٠٣٣٠٠'>وَ<قول هوية='٥٣٦١٤'>عَبْدُ اللهِ هَلْ لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٧٢٥٠٥'>وَ<قول هوية='٦٣١١٠'>عَمْرٌو هَلَّا لَقِيْتَهُ</قول></مقطع>
  <مقطع هوية='٥٢٣٣٥'>وَكَذٰلِكَ سَاْئِرُ حُرُوْفِ الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='١٥٠٢٦'>فَالْعَاْمِلُ فِيْهِ الِابْتِدَاْءُ</مقطع>
  <مقطع هوية='٥٧٧٢٣'>كَمَا أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع هوية='٧٠٥١٦'>
    <قول هوية='٦٦٠٥٠'>أَرَأَيْتَ زَيْدًا هَلْ لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٩٦٨٩٢'>كَاْنَ  <حرف>أَرَأَيْتَ</حرف> هُوَ الْعَاْمِلُ</مقطع>
  <مقطع هوية='٤٦٥٣٠'>وَكَذٰلِكَ إِذَا قُلْتَ</مقطع>
  <مقطع هوية='٨٧٠٥٣'>
    <قول هوية='٨٦٢٠٨'>قَدْ عَلِمْتُ زَيْدًا كَمْ لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٦٥٦٥٤'>كَاْنَ  <حرف>عَلِمْتُ</حرف> هُوَ الْعَاْمِلُ</مقطع>
  <مقطع هوية='٧٣٢١١'>فَكَذٰلِكَ هٰذَا</مقطع>
  <مقطع هوية='٥٠٤٣٩'>فَمَا بَعْدَ الْمُبْتَدَإِ مِنْ هٰذَا الْكَلَاْمِ</مقطع>
  <مقطع هوية='٨٩٦١٧'>فَِي مَوْضِعِ خَبَرِهِ</مقطع>
  <مقطع هوية='٧٠٢٣٨'>فَِإِنْ قُلْتَ  <قول هوية='٣٥٧٥٩'>زَيْدٌ كَمْ مَرَّةً رَأَيْتَ</قول>
  </مقطع>
  <مقطع هوية='٦٢٥٤٨'>فَهُوَ ضَعِيْفٌ</مقطع>
  <مقطع هوية='٧٩٤٩٤'>إِلَّا أَنْ تُدْخِلَ الْهَاْءَ</مقطع>
  <مقطع هوية='٨٣٦١٦'>كَمَا ضَعُفَ فِي قَوْلِهِ</مقطع>
  <مقطع هوية='٦٠٣٥٠'>
    <قول هوية='٨٥١٣٦'>كُلُّهُ لَمْ أَصْنَعْ</قول>
  </مقطع>
  <مقطع هوية='٥٥٢٢١'>وَلَا يَجُوْزُ أَنْ تَقُوْلَ</مقطع>
  <مقطع هوية='٤٨١٥٦'><قول هوية='٣٢٦١٣' ج="*">زَيْدًا هَلْ رَأَيْتَ</قول></مقطع>
  <مقطع هوية='٤١٩٤٨'>إِلَّا أَنْ تُرِيْدَ مَعْنَى الْهَاْءِ</مقطع>
  <مقطع هوية='٢٤٢٧٦'>مَعَ ضَعْفِهِ</مقطع>
  <مقطع هوية='٤٩٨٥٨'>فَتَرْفَعُ لِأَنَّكَ قَدْ فَصَلْتَ</مقطع>
  <مقطع هوية='٤٢٨١٢'>بَيْنَ الْمُبْتَدَإِ وَبَيْنَ الْفِعْلِ</مقطع>
  <مقطع هوية='٧٣١٣٦'>فَصَاْرَ الِاسْمُ مُبْتَدَأً</مقطع>
  <مقطع هوية='٦٧٣٨٦'>وَالْفِعْلُ بَعْدَ حَرْفِ الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٥٥٥٩٠'>وَلَوْ حَسُنَ هٰذَا أَوْ جَاْزَ</مقطع>
  <مقطع هوية='٥٣٤٨٠'>لَقُلْتَ  <قول هوية='٩١٩٠١' ج="*">قَدْ عَلِمْتُ زَيْدٌ كَمْ ضُرِبَ</قول>
  </مقطع>
  <مقطع هوية='٧١٢٥٨'>وَلَقُلْتَ  <قول هوية='٣٤٢٠٦' ج="*">أَرَأَيْتَ زَيْدٌ كَمْ مَرَّةً ضُرِبَ</قول>
  </مقطع>
  <مقطع هوية='٤٥٨٩٥'>عَلَى الْفِعْلِ الْآخِرِ</مقطع>
  <مقطع هوية='٢٩٥٣٣'>فَكَمَا لَا تَجِدُ بُدًّا</مقطع>
  <مقطع هوية='٣٨٩٦٤'>مِنْ إِعْمَاْلِ الْفِعْلِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٤٢٩٠٤'>كَذٰلِكَ لَا تَجِدُ بُدًّا</مقطع>
  <مقطع هوية='٤٣٣٦٧'>مِنْ إِعْمَاْلِ الِابْتِدَاْءِ</مقطع>
  <مقطع هوية='٠٤٠٠٢'>لِأَنَّكَ إِنَّمَا تَجِيْءُ بِالِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٧٧٦٩٥'>بَعْدَ مَا تَفْرُغُ مِنَ الِابْتِدَاْءَ</مقطع>
  <مقطع هوية='٢٢٤٠٨'>وَلَوْ أَرَاْدُوْا الإِعْمَاْلَ</مقطع>
  <مقطع هوية='١١٦٥٣'>لَمَّا ابْتَدَءُوْا بِالِاسْمِ</مقطع>
  <مقطع هوية='١٨٢٨٨'>أَلَا تَرََى أَنَّكَ تَقُوْلُ</مقطع>
  <مقطع هوية='٠١٠٨٠'>
    <قول هوية='٣٩٩٢٢'>زَيْدٌ هٰذَا أعَمْرٌو ضَرَبَهُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع هوية='٢٨٨٨٠'>وَلَا تَقُوْلُ  <قول هوية='٨٦٣٤٥' ج="*">عَمْرًا أَضَرَبْتَ</قول>
  </مقطع>
  <مقطع هوية='٧٥٩٧٥'>فَكَمَا لَا يَجُوْزُ هٰذَا</مقطع>
  <مقطع هوية='٦٣٤٩١'>لَا يَجُوْزُ ذٰلِكَ</مقطع>
  <مقطع هوية='٣٧٥٦٩'>فَحَرْفُ الْاْسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٢٦٢٠٥'>لَا يُفْصَلُ بِهِ</مقطع>
  <مقطع هوية='٤٧٩٩٥'>بَيْنَ الْعَاْمِلِ وَالْمَعْمُوْلِ</مقطع>
  <مقطع هوية='٦١١٨٨'>ثُمَّ يَكُوْنُ عَلَى حَاْلِهِ</مقطع>
  <مقطع هوية='٣٠١٥٠'>إِذَا جَاْءَتْ الْأَلِفُ أَوَّلًا</مقطع>
  <مقطع هوية='٤٦٠٠٨'>وَإِنَّمَا يَدْخُلُ عَلَى الْخَبَرِ</مقطع>
  <مقطع هوية='١٢٧٢٢'>وَمِمَّا لَا يَكُوْنُ إِلَّا رَفْعًا</مقطع>
  <مقطع هوية='٨٤٩٨٤'>قَوْلُكَ  <قول هوية='٦٣٦٦٧'>أَأَخَوَاْكَ اللَّذَاْنِ رَأَيْتُ</قول>
  </مقطع>
  <مقطع هوية='٠٣٨٠٥'>لَأَنَّ  <حرف>رَأَيْتُ</حرف> صِلَةٌ لِـ<حرف>اللَّذَيْنِ</حرف>
  </مقطع>
  <مقطع هوية='٢٩٢٣٥'>وَبِهِ يَتِمُّ اسْمًا</مقطع>
  <مقطع هوية='٣٩٤٣٨'>فَكَأَنَّكَ قُلْتَ <قول هوية='٧٣٤٦١'>أَأَخَوَاْكَ صَاْحِبَاْنَا</قول>
  </مقطع>
  <مقطع هوية='٤٤٣٦٣'>وَلَوْ كَاْنَ شَيْءٌ مِنْ هٰذَا</مقطع>
  <مقطع هوية='٧٧٧٦٨'>يَنْصِبُ شَيْئًا فِي الْاْسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٢٦٥٢٤'>لَقُلْتَ فِيْ الْخَبَرِ</مقطع>
  <مقطع هوية='٩٣٤٤١'>
    <قول هوية='٣١٧٥١'>زَيْدًا الَّذِي رَأَيْتُ</قول>
  </مقطع>
  <مقطع هوية='٧٢٤٠١'>فَنَصَبْتَ كَمَا تَقُوْلُ</مقطع>
  <مقطع هوية='٦٥٦٨٢'>
    <قول هوية='١١٢٩٤'>زَيْدًا رَأَيْتُ</قول>
  </مقطع>
  <مقطع هوية='٩٧١٧٤'>وَإِذَا كَاْنَ الْفِعْلُ فِي مَوْضِعِ الصِّفَةِ فَهُوَ كَذٰلِكَ</مقطع>
  <مقطع هوية='٠٥٦٨٣'>وَذٰلِكَ قَوْلُكَ <قول هوية='٧٨٥٥٤'>أَزَيْدٌ أَنْتَ رَجُلٌ تَضْرِبُهُ</قول></مقطع>
  <مقطع هوية='٨٥٩٧٨'>وَ<قول هوية='٠٨٣٨٣'>أَكُلَّ يَوْمٍ ثَوْبٌ تَلْبَسُهُ</قول>
  </مقطع>
  <مقطع هوية='٣١٦١٣'>فَإِذَا كَاْنَ وَصْفًا</مقطع>
  <مقطع هوية='٨٣٦٨٩'>فَأَحْسَنُهُ أَنْ يَكُوْنَ فِيْهِ الْهَاْءُ</مقطع>
  <مقطع هوية='٩٩٨٩٧'>لِأَنَّهُ لَيْسَ بِمَوْضِعِ إِعْمَاْلٍ</مقطع>
  <مقطع هوية='٨٢٩٦٣'>وَلَكِنَّهُ يَجُوْزُ فِيْهِ</مقطع>
  <مقطع هوية='٤٨٣٨٩'>كَمَا جَاْزَ فِي الْوَصْلِ</مقطع>
  <مقطع هوية='٠٣١٤٧'>لِأَنَّهُ فِي مَوْضِعِ مَا يَكُوْنُ مِنَ الِاسْمِ</مقطع>
  <مقطع هوية='١٤٨٩٠'>وَلَمْ تَكُنْ لَتَقُوْلَ</مقطع>
  <مقطع هوية='٤٤٢٣٦'>
    <قول هوية='٣٦٥٠٩' ج="*">أزَيْدًا أَنْتَ رَجُلٌ تَضْرِبُهُ</قول>
  </مقطع>
  <مقطع هوية='٠٩٠٥١'>وَأَنْتَ إِذَا جَعَلْتَهُ وَصْفًا لِلْمَفْعُوْلِ</مقطع>
  <مقطع هوية='٦٣٢٠٦'>لَمْ تَنْصِبْهُ</مقطع>
  <مقطع هوية='٦٣٠٣٧'>لِأَنَّهُ لَيْسَ بِمَبْنِيٍّ عَلَى الْفِعْلِ</مقطع>
  <مقطع هوية='٠٥٣١٠'>وَلَكِنَّ الْفِعْلَ فِي مَوْضِعِ الْوَصْفِ</مقطع>
  <مقطع هوية='٦٨٥٥٤'>كَمَا كَاْنَ فِي مَوْضِعِ الْخَبَرِ</مقطع>
  <مقطع هوية='٩٦٠٦٨'>فَمِنْ ذٰلِكَ قَوْلُ الشَّاْعِرِ</مقطع>
  <شاهدة هوية='٨٩٤٣٠'>
    <بيت>
      <مصراع>أَكُلَّ عَاْمٍ نَعَمٌ تَحْوُوْنَهْ</مصراع>
      <مصراع>يُلْقِحُهُ قَوْمٌ وَتَنْتِجُوْنَهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٦٥٧٤'>وَقَاْلَ زَيْدٍ الْخَيْلِ</مقطع>
  <!-- harûn says al-xayr is post-islamic name, al-xayl is jahiliyya name --> <شاهدة هوية='٠٣٥٥٦'>
    <بيت>
      <مصراع>أَفِيْ كُلِّ عَاْمٍ مَأْتَمٌ تَبْعَثُوْنَهُ</مصراع>
      <مصراع>عَلَىمِحْمَرٍ ثَوَّبْتُمُوْهُ وَمَا رِضا</مصراع>
    </بيت>
  </شاهدة>
  
  <مقطع هوية='٦٨٤٣٢'>وَقَاْلَ جَرِيْرٌ فِيْمَا لَيْسَ فِيْهِ الْهَاْءُ</مقطع>
  <شاهدة هوية='٧٧٢٧٧'>
    <بيت>
      <مصراع>أَبَحْتَ حِمَىً تِهَاْمَةَ بَعْدَ نَجْدٍ</مصراع>
      <مصراع>وَمَا شَيْءٌ حَمَيْتَ بِمُسْتَبَاْحِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٣٥٩٣'>وَقَاْلَ آخَرٌ <!-- variant in harun: الشَّاْعِرُ --></مقطع>
  <شاهدة هوية='٥١٠١٢'>
    <بيت>
      <مصراع>فَمَا أَدْرِىٓ أُغَيْرِهُمْ تَنَاْءٍ</مصراع>
      <مصراع>وَطُوْلُ الْعَهْدِ أَمْ مَاْلٌ أَصَاْبُوْا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٠٧٤٣٥'>وَمِمَّا لَا يَكُوْنُ فِيْهِ إِلَّا الرَّفْعُ</مقطع>
  <مقطع هوية='٧٣١٦٦'>قَوْلُهُ  <قول هوية='٤٨٨٢٦'>أَعَبْدُ اللهِ أَنْتَ الضَّاْرِبُهُ</قول>
  </مقطع>
  <مقطع هوية='٢٨٨٠٩'>لِأَنَّكَ إِنَّمَا تُرِيْدُ مَعْنَى  <حرف>الَّذِي ضَرَبَهُ</حرف>
  </مقطع>
  <مقطع هوية='٥٨٩٨٤'>وَهٰذَا لَا يَجْرِي مُجْرَى  <حرف>يَفْعَلُ</حرف>
  </مقطع>
  <مقطع هوية='٥٢٨٥٠'>أَلَا تَرَى أَنَّهُ لَا يَجُوْزُ أَنْ تَقُوْلَ</مقطع>
  <مقطع هوية='١٦٣٤٣'>
    <قول هوية='٦٠٩٥٨' ج="*">مَا زَيْدًا أَنَا الضَّاْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٢٢٧٨١'>وَ لَا  <قول هوية='٣٢٩٤٣' ج="*">زَيْدًا أَنْتَ الضَّاْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٢٨٢٠٢'>وَإِنَّمَا تَقُوْلُ  <حرف>الضَّاْرِبُ زَيْدًا</حرف>
  </مقطع>
  <مقطع هوية='١٨٢٤٤'>عَلََى مِثْلِ قَوْلِكَ  <حرف>الْحَسَنُ وَجْهَا</حرف>
  </مقطع>
  <مقطع هوية='٤٢٤٠٨'>أَلَا تَرَى أَنَّكَ لَا تَقُوْلُ</مقطع>
  <مقطع هوية='٣٢٩٤٢'>
    <قول هوية='٤٦٩٥٩' ج="*">أَنْتَ الْمَاْئَةَ الْوَاْهِبُ</قول>
  </مقطع>
  <مقطع هوية='٣٤٠١٩'>كَمَا تَقُوْلُ  <قول هوية='٠٠٦٤٦'>أَنْتَ زَيْدًا ضَاْرِبٌ</قول>
  </مقطع>
  <مقطع هوية='٣٣١١٩'>وَتَقُوْلُ  <قول هوية='٦٦٤٩١'>هٰذَا ضَاْرِبٌ كَمَا تَرَى</قول>
  </مقطع>
  <مقطع هوية='١٧٠٥٨'>فَيَجِيْءُ عَلَى مَعْنَى  <قول هوية='٢١٢٧٩'>هٰذَا يَضْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٨٩٦٩٢'>وَهُوَ يَعْمَلُ فِي حَاْلِ حَدِيْثِكَ</مقطع>
  <مقطع هوية='٤٧٦٠٤'>وَتَقُوْلُ  <قول هوية='٠٣٣٩٦'>هٰذَا ضَاْرِبٌ</قول>
  </مقطع>
  <مقطع هوية='٢٩٨٠٢'>فَيَجِيْءُ عَلَى مَعْنَى  <قول هوية='٤٢٢٢٣'>هٰذَا سَيَضْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٣٧٢٢٧'>وَإِذَا قُلْتَ  <قول هوية='٣٤٣٦٣'>هٰذَا الضَّاْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٥٩٣٩٢'>فَإِنَّمَا تُعَرِّفُهُ عَلَى مَعْنَى  <حرف>الَّذِي ضَرَبَ</حرف>
