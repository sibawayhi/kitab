  <مقطع هوية='١١٣٥٧'>لَمْ يَكُنْ إِلَّا نَصْبًا</مقطع>
  <مقطع هوية='٢٤٤٠٩'>لِأَنَّهُ لَيْسَ بِوَصْفٍ</مقطع>
  <مقطع هوية='٥٠١٦٥'>فَإِذَا كَاْنَ وَصْفًا</مقطع>
  <مقطع هوية='٤٦٨٧٩'>فَلَيْسَ بِمَبْنِيٍّ عَلَيْهِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٥٥٠٠٤'>كَمَا أَنَّهُ لَا يَكُوْنُ الِاسْمُ مَبْنِيًّا عَلَيْهِ فَِي الْخَبَرِ</مقطع>
  <مقطع هوية='٨٢٨٥٨'>فَلَا يَكُوْنُ <حرف>ضَاْرِبٌ</حرف>
  بِمَنْزِلَةِ  <مثال>يَفْعَلُ</مثال> وَ<مثال>تَفْعَلُ</مثال> إِلَّا نَكِرَةً</مقطع>
  <مقطع هوية='٢٦٠٨٠'>وَتَقُوْلُ
  <قول هوية='٠٢٣١٩'>أَذَكَرٌ أَنْ تَلِدَ نَاْقَتُكَ أَحَبُّ إِلَيْكَ أَمْ أُنْثَى</قول>
  </مقطع>
  <مقطع هوية='٣٣٤٦٥'>كَأَنَّهُ قَاْلَ  <قول هوية='٩٤٧٥٠'>أَذَكَرٌ نِتَاْجُهَا أَحَبُّ إِلَيْكَ أَمْ أُنْثَى</قول>
  </مقطع>
  <مقطع هوية='٩٨٦٠٨'>فَـ<حرف>أَنْ تَلِدَ</حرف> اسْمٌ</مقطع>
  <مقطع هوية='٠٣٠٠٢'>وَ<حرف>تَلِدُ</حرف> بِهِ يَتِمُّ الِاسْمُ</مقطع>
  <مقطع هوية='٦٤٠٧٢'>كَمَا يَتِمُّ <حرف>الَّذِي</حرف> بِالْفِعْلِ</مقطع>
  <مقطع هوية='٦١٤٠٢'>فَلَا عَمَلَ لَهُ هُنَا</مقطع>
  <مقطع هوية='٤١٤٤٧'>كَمَا لَيْسَ يَكُوْنُ لِصِلَةِ  <حرف>الَّذِي</حرف> عَمَلٌ</مقطع>
  <مقطع هوية='٩٦٠٢٢'>وَتَقُوْلُ  <قول هوية='٧٢٣٦٦'>أَزَيْدٌ أَنْ يَضْرِبَهُ عَمْرٌو أَمْثَلُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع هوية='٨٩٤٧٣'>كَأَنَّهُ قَاْلَ  <قول هوية='٣٦٩٩٥'>أَزَيْدٌ ضَرْبُ عَمْرٍو إِيَّاْهُ أَمْثَلُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع هوية='٤٦١٦٦'>فَالْمَصْدَرُ <!-- [مَبْنِيٌّ عَلَى الْـ] --> مُبْتَدَأٌ</مقطع>
  <مقطع هوية='٢٨٠٠٨'>وَ<حرف>أَمْثَلُ</حرف> مَبْنِيٌّ عَلَيْهِ</مقطع>
  <مقطع هوية='١٥٧٧٥'>وَلَمْ يُنْزَلْ مَنْزِلَةَ <حرف>يَفْعَلُ</حرف>
  </مقطع>
  <مقطع هوية='٢٩٢١٢'>فَكَأَنَّهُ قَاْلَ  <قول هوية='٢٠٨٩٢'>أَزَيْدٌ ضَاْرِبُهُ خَيْرٌ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع هوية='٠٦٢٨٤'>وَذٰلِكَ لِأَنَّكَ ابْتَدَأْتَهُ وَبَنَيْتَ عَلَيْهِ فَجَعَلْتَهُ اسْمًا</مقطع>
  <مقطع هوية='١١٥٣٩'>وَلَمْ يَلْتَبِسْ  <حرف>زَيْدٌ</حرف> بِالْفِعْلِ</مقطع>
  <مقطع هوية='٦٩٨٤٠'>إِذْ كَاْنَ صِلَةً لَهُ</مقطع>
  <مقطع هوية='٤٧٢٦٢'>كَمَا لَمْ يَلْتَبِسْ بِهِ <حرف>الضَاْرِبُهُ</حرف></مقطع>
  <مقطع هوية='٣٠١٣٩'>حِيْنَ قُلْتَ <قول هوية='٦٠٤٤٠'>زَيْدٌ أَنْتَ الضَاْرِبُهُ</قول></مقطع>
  <مقطع هوية='٨٠٧٦١'>إِلَّا أَنَّ <حرف>الضَاْرِبُهُ</حرف></مقطع>
  <مقطع هوية='٥٧٢٤٩'>فَِي مَعْنَى <حرف>الَّذِي ضَرَبَهُ</حرف></مقطع>
  <مقطع هوية='٤٥٢٠٩'>وَالْفِعْلُ تَمَاْمُ هَذِهِ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٣٧٢٥٢'>فَالْفِعْلُ لَا يلْتبسُ بِالْأَوَّلِ إِذَا كَاْنَ هَكَذَا</مقطع>
  <مقطع هوية='٤٩٥٧٦'>وَتَقُوْلُ  <قول هوية='٧٩٩٢٦'>أَأَنْ تَلِدَ نَاْقَتُكَ ذَكَرًا أَحَبُّ إِلَيْكَ أَمْ أُنْثَى</قول></مقطع>
  <مقطع هوية='٦٨٩٦٠'>لِأَنَّكَ حَمَلْتَهُ عَلَى الْفِعْلِ الَّذِي هُوَ صِلَةُ <حرف>أَنْ</حرف></مقطع>
  <مقطع هوية='٤٠٠٨٧'>فَصَاْرَ فِي صِلَتِهِ</مقطع>
  <مقطع هوية='٦٦٦٢٥'>فَصَاْرَ كَقَوْلِكَ  <قول هوية='٨٠٦٦٤'>الَّذِي رَأَيْتُ أَخَاْهُ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٣٤١٠٨'>وَلَا يَجُوْزُ أَنْ تَبْتَدِئَ بِـ<حرف>الْأَخِ</حرف> قَبْلَ <حرف>الَّذِي</حرف></مقطع>
  <مقطع هوية='٦٩٠٣٤'>وَتُعْمِلَ فِيْهِ  <حرف>رَأَيْتُ أَخَاْهُ زَيْدٌ</حرف></مقطع>
  <مقطع هوية='٠٣١٤٤'>فَكَذٰلِكَ لَا يَجُوْزُ النَّصْبُ فَِي قَوْلِكَ</مقطع>
  <مقطع هوية='٦٥٤٠٦'><قول هوية='٨٨٧٨١'>أَذَكَرٌ أَنْ تَلِدَ نَاْقَتُكَ أَحَبُّ إِلَيْكَ أَمْ أُنْثَىْ</قول></مقطع>
  <مقطع هوية='٨٧٤١٣'>وَذٰلِكَ أَنَّكَ لَوْ قُلْتَ <قول هوية='٣٦٦٤٢' ج="*">أَخَاْهُ الَّذِي رَأَيْتُ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٦٩٨١٦'>لَمْ يَجُزْ وَأَنْتَ تُرِيْدَ <قول هوية='٣٧٣٦١'>الَّذِي رَأَيْتُ أَخَاْهُ زَيْدٌ</قول></مقطع>
  <مقطع هوية='٨٣٧١٠'>وَمِمَّا لَا يَكُوْنُ فِي الِاسْتِفْهَاْمِ إِلَّا رَفْعًا</مقطع>
  <مقطع هوية='٠٤٤٩٢'>قَوْلُكَ  <قول هوية='٠٤٧٩٨'>أَعَبْدُ اللهِ أَنْتَ أَكْرَمُ عَلَيْهِ أَمْ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٥٦١٨٤'>وَ<قول هوية='١٣١٣٩'>أَعَبْدُ اللهِ أَنْتَ لَهُ أَصْدَقُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع هوية='١٣٧٨٢'>كَأَنَّكَ قُلْتَ  <قول هوية='٤٦٣٨٨'>أَعَبْدُ اللهِ أَنْتَ أَخُوْهُ أَمْ بِشْرٌ</قول>
