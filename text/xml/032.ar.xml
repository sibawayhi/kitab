  <مقطع هوية='٢٠٣٥٠'>فَلَيْسَ لِلْآخِرِ سَبِيْلٌ عَلَى الِاسْمِ</مقطع>
  <مقطع هوية='٣٤٧٧٣'>لِأَنَّهُ مَجْزُوْمٌ</مقطع>
  <مقطع هوية='٤٢٥٢٥'>وَهُوَ جَوَاْبُ الْفِعْلِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٥٧١٨٩'>وَلَيْسَ لِلْفِعْلِ الْأَوَّلِ سَبِيْلٌ</مقطع>
  <مقطع هوية='١٣٩٣٨'>لِأَنَّهُ مَعَ  <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع هوية='١٣٨٨٣'>بِمَنْزِلَةِ قَوْلِكَ  <قول هوية='٣١٦٥٤'>أَعَبْدُ اللهِ حِيْنَ يَأْتِيْنِي أَضْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٥٤٥٢٦'>فَلَيْسَ لِـ<حرف>عَبْدُ اللهِ</حرف> فِي  <حرف>يَأْتِيْنِي</حرف> حَظٌّ</مقطع>
  <مقطع هوية='١٥٧٨١'>لِأَنَّهُ بِمَنْزِلَةِ قَوْلِكَ  <قول هوية='٨٨١٥٨'>أَعَبْدُ اللهِ يَوْمَ الْجُمْعَةِ أَضْرِبُ</قول>
  </مقطع>
  <مقطع هوية='١٢٥٣٤'>وَمِثْلُ ذٰلِكَ  <قول هوية='٩٧٩٥٠'>زَيْدٌ حَيْنَ أَضْرِبُ يَأْتِيْنِي</قول>
  </مقطع>
  <مقطع هوية='٦٥١٥٦'>لِأَنَّ الْمُعْتَمِدَ عَلَى <حرف>زَيْدٍ</حرف> آخِرُ الْكَلَاْمِ
  وَهُوَ <حرف>يَأْتِيْنِي</حرف></مقطع>
  <مقطع هوية='٥٨٤٤٠'>وَكَذٰلِكَ إِذَا قُلْتَ <قول هوية='٢٠٧٠٣'>زَيْدًا إِذَا أَتَاْنِي أَضْرِبُ</قول></مقطع>
  <مقطع هوية='٣١٩٩٦'>وَإِنَّمَا هُوَ بِمَنْزِلَةِ <حرف>حِيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٢٤٩١٩'>فَإِنْ لَمْ تَجْزِمِ الْآخِرَ نَصَبْتَ</مقطع>
  <مقطع هوية='٨٥٤٢٦'>وَذٰلِكَ قَوْلُكَ <قول هوية='٢٨٥٤٦'>أزَيْدًا إِنْ رَأَيْتَ تَضْرِبُ</قول></مقطع>
  <مقطع هوية='٦٨٥٠٠'>وَأَحْسَنُهُ أَنْ تُدْخِلَ فِي  <حرف>رَأَيْتَ</حرف> الْهَاْءَ</مقطع>
  <مقطع هوية='٤٢٢٩١'>لِأَنَّهُ غَيْرُ مُسْتَعْمَلٍ</مقطع>
  <مقطع هوية='٨٥٧٢٩'>فَصَاْرَتْ حُرُوْفُ الْجَزَاْءِ فِي هٰذَا</مقطع>
  <مقطع هوية='٨٩٦٥٥'>بِمَنْزِلَةِ قَوْلِكَ  <قول هوية='٦٧٤٢٩'>زَيْدٌ كَمْ مَرَّةً رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٧٢٣١٨'>فَإِذَا قُلْتَ  <قول هوية='٥٧٢٨١'>إِنْ تَرَ زَيْدًا تَضْرِبْ</قول>
  </مقطع>
  <مقطع هوية='٠٢١٣٦'>فَلَيْسَ إِلَّا هٰذَا</مقطع>
  <مقطع هوية='٥٦٠٣٧'>صَاْرَ بِمَنْزِلَةِ قَوْلِكَ  <قول هوية='٧٦٤٧٩'>حِيْنَ تَرَى زَيْدًا يَأْتِيكَ</قول>
  </مقطع>
  <مقطع هوية='١٢٩١٩'>لِأَنَّهُ صَاْرَ فِي مَوْضِعِ الْمُضْمَرِ</مقطع>
  <مقطع هوية='٥٠١٩٧'>حِيْنَ قُلْتَ  <قول هوية='٤٩٢٠٦'>زَيْدٌ حِيْنَ تَضْرِبُهُ يَكُوْنُ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع هوية='٧٥٩٦٤'>وَلَوْ جَاْزَ أَنْ تَجْعَلَ زَيْدًا</مقطع>
  <مقطع هوية='٢٠٢٤٧'>مُبْتَدَأً عَلَى هٰذَا الْفِعْلِ</مقطع>
  <مقطع هوية='٧٣٧٩٢'>لَقُلْتَ <قول هوية='٨٥١٤٧'>الْقِتَاْلُ زَيْدًا <!-- [زَيْدٌ؟] --> حِيْنَ تَأْتِي</قول>
  </مقطع>
  <مقطع هوية='٣٣٣٧٦'>تُرِيْدُ  <قول هوية='٥٦١٣٥'>الْقِتَاْلُ حِيْنَ تَأْتِي زَيْدًا</قول></مقطع>
  <مقطع هوية='٨٣٦١٩'>وَتَقُوْلُ فِي الْخَبَرِ وَغَيْرِهِ <قول هوية='٢٣٤١٠'>إِنْ زَيْدًا تَرَهُ تَضْرِبْ</قول></مقطع>
  <مقطع هوية='٤٢١٧٧'>تَنْصِبُ <حرف>زَيْدًا</حرف> لِأَنَّ الْفِعْلَ أَنْ يَلِيَ  <حرف>إِنْ</حرف> أَوْلَى</مقطع>
  <مقطع هوية='٧٥١٠٥'>كَمَا كَاْنَ ذٰلِكَ فِي حُرُوْفِ الاْسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٦٠٨٥٢'>وَهَى أَبْعَدُ مَنَ الرَّفْعِ</مقطع>
  <مقطع هوية='٧٠٠٩٤'>لِأَنَّهُ لَا يُبْنَى فِيْهَا الِاسْمُ عَلَى مُبْتَدَإٍ</مقطع>
  <مقطع هوية='١٢٠٠٢'>وَإِنَّمَا أَجَاْزُوْا تَقْدِيْمَ الِاسْمِ فِي  <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع هوية='١٦٤٠٤'>لِأَنَّهَا أُمُّ الْجَزَاْءِ</مقطع>
  <مقطع هوية='٩٦٦٧٦'>وَلَا تَزُوْلُ عَنْهُ</مقطع>
  <مقطع هوية='٩٥٨٥٣'>فَصَاْرَ ذٰلِكَ فِيْهَا</مقطع>
  <مقطع هوية='٤١٤٣٣'>كَمَا صَاْرَ فِي أَلِفِ الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٣٤٤١٨'>مَا لَمْ يَجُزْ فِي الْحُرُوْفِ الْأُخَرِ</مقطع>

  <مقطع هوية='٥٢٧٧٠'>وَقَاْلَ <شاعر>النَّمِرُ بْنُ تَوْلَبٍ</شاعر></مقطع>
  <شاهدة هوية='١٠٤٢٤' شاعر="النَّمِرُ بْنُ تَوْلَبٍ">
    <بيت>
      <مصراع>لَا تَجْزَعِى <ثبات>إِنْ مُنْفِسًا أَهْلَكْتُهُ</ثبات></مصراع>
      <مصراع>وَإِذَا هَلَكْتُ فَعِنْدَ ذَلِكِ فَاْجَزَعِي</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨١٧٩٨'>وَإِنُ اضْطُرَّ شَاْعِرٌ فَأَجْرَى <حرف>إِذَا</حرف>
  مُجْرَى <حرف>إِنْ</حرف> فَجَاْزَى بِهَا</مقطع>
  <مقطع هوية='١٩٣٤٦'>قَاْلَ  <قول هوية='١٠٩٥٦'>أَزَيْدٌ إِذَا تَرَ تَضْرِبْ</قول>
  </مقطع>
  <مقطع هوية='٩٠٦٧٤'>إِنْ جُعِلَ <حرف>تَضْرِبْ</حرف> جَوَاْبًا</مقطع>
  <مقطع هوية='٩٦١٠٨'>وَإِنْ رَفَعَهَا نَصَبَ</مقطع>
  <مقطع هوية='٠٢٨٢٣'>لِأَنَّهُ لَمْ يَجْعَلْهَا جَوَاْبًا</مقطع>
  <مقطع هوية='٨٩٤٧٣'>وَتَرْفَعُ الْجَوَاْبَ حِيْنَ يَذْهَبُ الْجَزْمُ مِنَ الْأَوَّلِ فِي اللَّفْظِ</مقطع>
  <مقطع هوية='٥٩٢٠٤'>وَالِاسْمُ هِٰهُنَا مُبْتَدَأٌ إِذَا جَزَمْتَ</مقطع>
  <مقطع هوية='٥٢٨٣٨'>نَحْوُ قَوْلِهِمْ <قول هوية='٩٠٤٦٠'>أَيُّهُمْ يَأْتِكَ تَضْرِبْ</قول> إِذَا جَزَمْتَ</مقطع>
  <مقطع هوية='٨٣٤٨٧'>لِأَنَّكَ جِئْتَ بِـ<حرف>تَضْرِبْ</حرف> مَجْزُوْمًا</مقطع>
  <مقطع هوية='٦٠٣٣٢'>بَعْدَ أَنْ عَمِلَ الِابْتِدَاْءُ فِي  <حرف>أَيُّهُمْ</حرف>
  </مقطع>
  <مقطع هوية='٢٣٦٨٦'>وَلَا سَبِيِلَ لَهُ عَلَيْهِ</مقطع>
  <مقطع هوية='٣٥٨٣٤'>وَكَذٰلِكَ هٰذَا</مقطع>
  <مقطع هوية='٦٤٢٤٣'>حَيْثُ جِئْتَ بِهِ مَجْزُوْمًا</مقطع>
  <مقطع هوية='١٢٦٦٧'>بَعْدَ أَنْ عَمِلَ فِيْهِ الِابْتِدَاْءُ</مقطع>
  <مقطع هوية='٧٨٦٥٥'>وَأَمَّا الْفِعْلُ الْأَوَّلُ</مقطع>
  <مقطع هوية='٤٤٤١٥'>فَصَاْرَ مَعَ مَا قَبْلَهُ</مقطع>
  <مقطع هوية='٩٢٠٥٦'>بِمَنْزِلَةِ 
  <حرف>حِيْنَ</حرف> وَسَاْئِرِ الظُّرُوْفِ</مقطع>
  <مقطع هوية='٦٦٦٤٧'>وَإِنْ قُلْتَ  <قول هوية='٩٦٩٣٩'>زَيْدٌ إِذَا يَأْتِيْنِي أَضْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٣١٠٩٢'>تُرِيْدُ مَعْنَى الْهَاْءِ</مقطع>
  <مقطع هوية='٥٤٢٨٦'>وَلَا تُرِيْدُ  <قول هوية='٣٢٠٨٤'>زَيْدًا أَضْرِبُ إِذَا يَأْتِيْنِي</قول>
  </مقطع>
  <مقطع هوية='٧٧٩٧٧'>وَلَكِنَّكَ تَضَعُ  <حرف>أَضْرِبُ</حرف> هِٰهُنَا</مقطع>
  <مقطع هوية='٦٠٣٢٦'>مِثْلَ  <حرف>أَضْرِبْ</حرف> إِذَا جَزَمْتَ</مقطع>
  <مقطع هوية='٢٥٥٢٨'>وَإِنْ لَمْ يَكُنْ مَجْزُوْمًا</مقطع>
  <مقطع هوية='٩٠٣٣٥'>لِأَنَّ الْمَعْنَى مَعْنَى الْمُجَاْزَاْةِ</مقطع>
  <مقطع هوية='٠٠٤٧٧'>فَِي قَوْلِكَ  <قول هوية='٤٣٠٠٨'>أَزَيْدٌ إِنْ يَأْتِكَ أَضْرِبْ</قول>
  </مقطع>
  <مقطع هوية='٨٢١١٠'>وَلَا تُرِيْدُ بِهِ  <قول هوية='٨٨٨١٢'>أَضْرِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٤٦٥٢٧'>فَيَكُوْنَ عَلَى أَوَّلِ الْكَلَاْمِ</مقطع>
  <مقطع هوية='٥٣٣٦٣'>كَمَا لَمْ تُرِدْ بِهٰذَا أَوَّلَ الْكَلَاْمِ رَفَعْتَ</مقطع>
  <مقطع هوية='٣٠٦٦٢'>وَكَذٰلِكَ  <حرف>حِيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٧٧٣٥٣'>إِذَا قُلْتَ  <قول هوية='٢٤٣٣٩'>أَزَيْدٌ حِيْنَ يَأْتِيْكَ تَضْرِبُ</قول>
  </مقطع>
  <مقطع هوية='٧٩٩٧٧'>وَإِنَّمَا رَفَعْتَ الْأَوَّلَ فِي هٰذَا كُلِّهِ</مقطع>
  <مقطع هوية='٤٧٩٨٨'>لِأَنَّكَ جَعَلْتَ  <حرف>تَضْرِبُ</حرف> وَ<حرف>أَضْرِبُ</حرف> جَوَاْبًا</مقطع>
  <مقطع هوية='٤٣٩٤٨'>فَصَاْرَ كَأَنَّهُ مِنْ صِلَتِهِ</مقطع>
  <مقطع هوية='١٧٣١٩'>إِذْ كَاْنَ مِنْ تَمَاْمِهِ وَلَمْ يَرْجَعْ إِلَى الْأَوَّلِ</مقطع>
  <مقطع هوية='٩٥٦٢٧'>وَإِنَّمَا تَرُدُّهُ إِلَى الْأَوَّلِ فِيْمَنْ قَاْلَ <قول هوية='٩٠١١١'>إِنْ تَأْتِنِي آتِيْكَ</قول></مقطع>
  <مقطع هوية='٦١٥٧٧'>وَهُوَ قَبِيْحٌ وَإِنَّمَا يَجُوْزُ فِي الشِّعْرِ</مقطع>
  <مقطع هوية='٨١٣٧١'>وَإِذَا قُلْتَ  <قول هوية='١١٧٩٤'>أَزَيْدٌ إِنْ يَأْتِكَ تَضْرِبْهُ</قول>
  </مقطع>
  <مقطع هوية='٠٤٩٩٩'>فَلَيْسَ تَكُوْنُ الْهَاْءُ إِلَّا لِـ<حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع هوية='٧٩٦٣٨'>وَيَكُوْنُ الْفِعْلُ الْآخِرُ جَوَاْبًا لِلْأَوَّلِ</مقطع>
  <مقطع هوية='٠٧٥٦٤'>وَيَدُلُّكَ عَلَى أَنَّهَا لَا تَكُوْنُ إِلَّا لِزَيْدٍ</مقطع>
  <مقطع هوية='٤٥٠٩٣'>أَنَّكَ لَوْ قُلْتَ  <قول هوية='١٤٠٧٨'>أَزَيْدٌ إَِنْ تَأْتِكَ أَمَةُ اللهِ تَضْرِبْهَا</قول>
  </مقطع>
  <مقطع هوية='٣٦٦٨٣'>لَمْ يَجِزْ</مقطع>
  <مقطع هوية='٣٩٣٨٢'>لِأَنَّكَ ابْتَدَأْتَ زَيْدًا</مقطع>
  <مقطع هوية='٨٣٦٦٤'>وَلَا بُدَّ مِنْ خَبَرٍ</مقطع>
  <مقطع هوية='١٤٩٧٨'>وَلَا يَكُوْنُ مَا بَعْدَهُ خَبَرًا لَهُ</مقطع>
  <مقطع هوية='٩٢١٧١'>حَتَّى يَكُوْنَ فِيْهِ ضَمِيْرُهُ</مقطع>
  <مقطع هوية='٠٧١٩١'>وَإِذَا قُلْتَ  <قول هوية='٦٩١٧٢'>زَيْدًا لَمْ أَضْرِبْ</قول> أَوْ  <قول هوية='٤٠٠٣٥'>زَيْدًا لَنْ أَضْرِبَ</قول>
  </مقطع>
  <مقطع هوية='٨٦٥٣٣'>لَمْ يَكُنْ فِيْهِ إِلَّا النَّصْبُ</مقطع>
  <مقطع هوية='٥٩٢٥٥'>لِأَنَّكَ لَمْ تُوْقِعْ بَعْدَ  <حرف>لَمْ</حرف> وَ<حرف>لَنْ</حرف> شَيْئًا</مقطع>
  <مقطع هوية='٢٠٤٩٢'>يَجُوْزُ لَكَ أَنْ تُقَدِّمَهُ قَبْلَهُمَا</مقطع>
  <مقطع هوية='٠٤٨٠٠'>فَيَكُوْنَ عَلَى غَيْرِ حَاْلِهِ بَعْدَهُمَا</مقطع>
  <مقطع هوية='٥١٤١٨'>كَمَا كَاْنَ ذٰلِكَ فِي الْجَزَاْءِ</مقطع>
  <مقطع هوية='٠٦٩٢٤'>وَ<حرف>لَنْ أَضْرِبَ</حرف> نَفْيٌ لِقَوْلِهِ <حرف>سَأَضْرِبُ</حرف></مقطع>
  <مقطع هوية='٣٤٤٨٦'>كَمَا أَنَّ <حرف>لَا تَضْرِبْ</حرف>
  نَفْيٌ لِقَوْلِهِ <حرف>اضْرِبْ</حرف></مقطع>
  <مقطع هوية='٣٤٠٤٤'>وَ<حرف>لَمْ أَضْرِبْ</حرف> نَفْيٌ لِـ<حرف>ضَرَبْتُ</حرف></مقطع>
  <مقطع هوية='٨٦١٠٧'>وَتَقُوْلُ <قول هوية='٢٤٢٥٨'>كُلَّ رَجُلٍ يَأْتيكَ فَاضْرِبْ</قول></مقطع>
  <مقطع هوية='٠٣٨٧٧'>نَصْبٌ لِأَنَّ <حرف>يَأْتيكَ</حرف> هِٰهُنَا صِفَةٌ</مقطع>
  <مقطع هوية='٠٦٠٠٦'>فَكَأَنَّكَ قُلْتَ <قول هوية='٧٨٤٦٠'>كُلَّ رَجُلٍ صَاْلِحٍ اضْرِبْ</قول></مقطع>
  <مقطع هوية='٢٢٦٨٢'>فَإِنْ قُلْتَ <قول هوية='٧٣٣٤٤'>أَيُّهُمْ جَاْءَكَ فَاضْرِبْ</قول></مقطع>
  <مقطع هوية='٥١٥٦٠'>رَفَعْتَهُ لِأَنَّهُ جَعَلَ <حرف>جَاْءَكَ</حرف> فَِي مَوْضِعِ الْخَبَرِ</مقطع>
  <مقطع هوية='٨٨٣٧٨'>وَذٰلِكَ لِأَنَّ قَوْلَهُ <حرف>فَاضْرِبْ</حرف> فِي مَوْضِعِ الْجَوَاْبِ</مقطع>
  <مقطع هوية='٨٩٦٣٩'>وَ<حرف>أَيٌّ</حرف> مِنْ حُرُوْفِ الْمُجَاْزَاْةِ</مقطع>
  <مقطع هوية='٩٨٨٤٥'>وَ<حرف>كُلُّ رَجُلٍ</حرف> لَيْسَتْ مِنْ حُرُوْفِ الْمُجَاْزَاْةِ</مقطع>
  <مقطع هوية='٣٧٣٢٨'>وَمِثْلُهُ <قول هوية='٢٦٠٧٦'>زَيْدٌ إِنْ أَتَاْكَ فَاضْرِبْ</قول></مقطع>
  <مقطع هوية='١٢١٦٣'>إِلَّا أَنْ تُرِيْدَ أَوَّلَ الْكَلَاْمِ فَتَنْصِبُ</مقطع>
  <مقطع هوية='١٠٨٦١'>وَيَكُوْنُ عَلَى حَدِّ قَوْلِكَ <قول هوية='٣٨٠٤٣'>زَيْدًا إِنْ أَتَاْكَ تَضْرِبْ</قول></مقطع>
  <مقطع هوية='١١٢٤٣'>وَ<قول هوية='٨٩٩٩٤'>أَيَّهُمْ يَأْتِكَ تَضْرِبْ</قول></مقطع>
  <مقطع هوية='٤٥٨١٠'>إِذَا كَاْنَتْ بِمَنْزِلَةِ <حرف>الَّذِي</حرف></مقطع>
  <مقطع هوية='٣٥٩٦٥'>وَتَقُوْلُ <قول هوية='٢٨٥١٥'>زَيْدًا إِذَا أَتَاْكَ فَاضْرِبْ</قول></مقطع>
  <مقطع هوية='١٤٣٣٦'>فَإِنْ وَضَعْتَهُ فِي مَوْضِعِ
  <قول هوية='٧٤٠٥٢'>زَيْدٌ إِنْ يَأْتِكَ تَضْرِبْ</قول> رَفَعْتَ</مقطع>
  <مقطع هوية='٦٨٧٩٦'>فَارْفَعْ إِذَا كَاْنَتْ <حرف>تَضْرِبْ</حرف>
  جَوَاْبًا لِـ<حرف>يَأَتِكَ</حرف></مقطع>
  <مقطع هوية='٩٢٩٣٠'>وَكَذٰلِكَ <حرف>حِيْنَ</حرف></مقطع>
  <مقطع هوية='٠٨٢٧٢'>وَالنَّصْبُ فِي <حرف>زَيْدٍ</حرف> أَحْسَنُ</مقطع>
  <مقطع هوية='٦٨٧٧٠'>إِذَا كَاْنَتْ الْهَاْءُ يَضْعُفُ تَرْكُهَا وَيَقْبُحُ</مقطع>
  <مقطع هوية='٦٣٧٨٣'>كَمَا أَنَّ الْفِعْلَ يَقْبُحُ إِذَا لَمْ يَكُنْ مَعَهُ مَفْعُوْلٌ مُضْمَرٌ أَوْ مُظْهَرٌ</مقطع>
  <مقطع هوية='٠٨٤٨٢'>فَأَعْمِلْهُ فِي الْأَوَّلِ</مقطع>
  <مقطع هوية='٩٣١١٢'>وَلَيْسَ هٰذَا فِي الْقِيَاْسِ</مقطع>
  <مقطع هوية='١٤٦٦١'>لِأَنَّهَا تَكُوْنُ بِمَنْزِلَةِ <حرف>حِيْنَ</حرف></مقطع>
  <مقطع هوية='٠٨٨٠٩'>وَ<حرف>إِذَا</حرف> وَ<حرف>حِيْنَ</حرف> لَا يَكُوْنُ وَاْحِدَةٌ مِنْهُمَا خَبَرًا لِـ<حرف>زَيْدٍ</حرف></مقطع>
  <مقطع هوية='٥٢١٢٢'>أَلَا تَرَى أَنَّكَ لَا تَقُوْلُ <قول ج="*" هوية='٥٩٧٣٧'>زَيْدٌ حِيْنَ يَأْتِيْنِي</قول></مقطع>
  <مقطع هوية='٣٩٥٢٤'>لِأَنَّ <حرف>حِيْنَ</حرف> لَا تَكُوْنُ ظَرْفًا لِـ<حرف>زَيْدٍ</حرف></مقطع>
  <مقطع هوية='٩٣٢٤٠'>وَتَقُوْلُ <قول هوية='٣٨٩٦٤'>الحَرُّ حِيْنَ تَأَتِيِنِي</قول></مقطع>
  <مقطع هوية='٥٦٢٧٩'>فَيَكُوْنُ ظَرْفًا لِمَا فِيْهِ مِنْ مَعْنَى الْفِعْلِ</مقطع>
  <مقطع هوية='٥٢٩٩٧'>وَجَمِيْعُ ظُرُوْفِ الزَّمَاْنِ لَا تَكُوْنُ ظُرُوْفًا لِلْجُثَثِ</مقطع>
  <مقطع هوية='٩٦٩١٩'>فَإِنْ قُلْتَ  <قول هوية='٦٤٦٥٤'>زَيْدًا يَوْمَ الْجُمْعَةِ أَضْرِبُ</قول></مقطع>
  <مقطع هوية='٤٢٨٠١'>لَمْ يَكُنْ فِيْهِ إِلَّا النَّصْبُ</مقطع>
  <مقطع هوية='٤٦٥٤٦'>لِأَنَّهُ لَيْسَ هٰهُنَا مَعْنَى جَزَاْءٍ</مقطع>
  <مقطع هوية='٠١٠٧٦'>وَلَا يَجُوْزُ الرَّفْعُ إِلَّا عَلَى قَوْلِهِ</مقطع>
  <شاهدة هوية='٨٤٥٣٤'>
    <بيت>
      <مصراع>كُلُّهُ لَمْ أَصْنَعِ</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٧٨٦٣'>أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول هوية='٩٧٨٧٠'>زَيْدٌ يَوْمَ الْجُمْعَةِ فَأَنَا أَضْرِبُهُ</قول></مقطع>
  <مقطع هوية='٧٠٤٢٤'>لَمْ يَجُزْ</مقطع>
  <مقطع هوية='١١٥٢٦'>وَلَوْ قُلْتَ <قول هوية='٣٧٤٦٦'>زَيْدٌ إِذَا جَاْءَنِي فَأَنَا أَضْرِبُهُ</قول>
  </مقطع>
  <مقطع هوية='٣٢١٠٦'>كَاْنَ جَيِّدًا</مقطع>
  <مقطع هوية='٤٥٥٢١'>فَهٰذَا يَدُلُّكَ عَلَى أَنَّهُ يَكُوْنُ عَلَى غَيْرِ قَوْلِهِ</مقطع>
  <مقطع هوية='٥٠٠٨٢'>
    <قول هوية='٧٥٩٨٩'>زَيْدًا أَضْرِبُ حِيْنَ يَأْتِيْكَ</قول>
  </مقطع>

