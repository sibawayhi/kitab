     البكاء="١-٤٠١"
     هارون="١-٣١٨"
     يعقوب="١-٣٨١"
     رقم="٦٤">

    <عنوان>
      <مقطع هوية='٢٦٦٩٣'>هٰذَا بَاْبُ مَا جَرَى مِنَ الْمَصَاْدِرِ الْمُضَاْفَةِ</مقطع>
      <مقطع هوية=''>مَجْرَى الْمَصَاْدِرِ الْمُفْرَدَةِ الْمَدْعُوِّ بِهَا</مقطع>
   </عنوان>
   <مقطع هوية='٨٤٢٥٥'>وَإِنَّمَا أُضِيْفَتْ لِيَكُوْنَ الْمُضَاْفُ فِيْهَا بِمَنْزِلَتِهِ فِي اللَّاْمِ</مقطع>
   <مقطع هوية=''>إِذَا قُلْتَ <قول هوية='٢٢٢٠٩'>سَقْيًا لَكَ</قول> لِتُبيِّنَ مَنْ تَعْنِي</مقطع>

    <مقطع هوية='٢٦٠٥٨'>وَذٰلِكَ <قول هوية='١٩٤٧١'>وَيْلَكَ</قول>
   </مقطع>
    <مقطع هوية='٨٨٧٥٥'>وَ<قول هوية='١٧١٦٧'>وَيْحَكَ</قول>
   </مقطع>
    <مقطع هوية='٣٩٠٤١'>وَ<قول هوية='٨٩١١٢'>وَيْسَكَ</قول>
   </مقطع>
    <مقطع هوية='٦٠٥٦٨'>وَ<قول هوية='٨٥٦٨٩'>وَيْبَكَ</قول></مقطع>

    <مقطع هوية='٩٢٧٣٧'>وَلَا يَجُوْزُ <حرف ج="*">سَقْيَكَ</حرف></مقطع>

    <مقطع هوية='٣٦٥٣٠'>إِنَّمَا تُجْرِي ذَا كَمَا أَجْرَتِ الْعَرَبُ</مقطع>
    <مقطع هوية='٥١٣٠٣'>وَمِثْلُ ذٰلِكَ <حرف>عَدَدْتُكَ</حرف></مقطع>
    <مقطع هوية='١١٥٥٧'>وَ<حرف>كِلْتُكَ</حرف></مقطع>
    <مقطع هوية='٢٨٣١٢'>وَ<حرف>وَزَنْتُكَ</حرف></مقطع>
   <مقطع هوية='١٣٠١٧'>وَلَا تَقُوْلُ <حرف ج="*">وَهَبْتُكَ</حرف> لِأَنَّهُمْ لَمْ يَعُدُّوْهُ</مقطع>
   <مقطع هوية='٨٢٢٩٧'>وَلٰكِنْ <حرف>وَهَبْتُ لَكَ</حرف></مقطع>
    <مقطع هوية='٩٨٧٨٥'>وَهٰذَا حَرْفٌ لَا يُتَكَلَّمُ بِهِ مُفْرَدًا</مقطع>
    <مقطع هوية='٠١٧٣٣'>إِلَّا أَنْ يَكُوْنَ عَلَى <حرف>وَيْلَكَ</حرف></مقطع>
    <مقطع هوية='٥٢٥٤٧'>وَهُوَ قَوْلُكَ <قول هوية='٤٢٣٧٣'>وَيْلَكَ وَعَوْلَكَ</قول>
   </مقطع>
   <مقطع هوية='٩٧٧٠٣'>وَلَا يَجُوْزُ <حرف ج="*">عَوْلَكَ</حرف></مقطع>

