<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٦٠"
     درنبورج="١-١٣٣"
     البكاء="١-٤٠١"
     هارون="١-٣١٨"
     يعقوب="١-٣٨١"
     رقم="٦٤">

    <عنوان>
       <مقطع هوية='٢٦٦٩٣'>هٰذَا بَاْبُ مَا جَرَى مِنَ الْمَصَاْدِرِ الْمُضَاْفَةِ مَجْرَى الْمَصَاْدِرِ الْمُفْرَدَةِ الْمَدْعُوِّ بِهَا</مقطع>
   </عنوان>
    <مقطع هوية='٨٤٢٥٥'>وَإِنَّمَا أُضِيْفَتْ لِيَكُوْنَ الْمُضَاْفُ فِيْهَا بِمَنْزِلَتِهِ فِي اللَّاْمِ إِذَا قُلْتَ <قول هوية='٢٢٢٠٩'>سَقْيًا لَكَ</قول> لِتُبيِّنَ مَنْ تَعْنِي</مقطع>

    <مقطع هوية='٢٦٠٥٨'>وَذٰلِكَ <قول هوية='١٩٤٧١'>وَيْلَكَ</قول>
   </مقطع>
    <مقطع هوية='٨٨٧٥٥'>وَ<قول هوية='١٧١٦٧'>وَيْحَكَ</قول>
   </مقطع>
    <مقطع هوية='٣٩٠٤١'>وَ<قول هوية='٨٩١١٢'>وَيْسَكَ</قول>
   </مقطع>
    <مقطع هوية='٦٠٥٦٨'>وَ<قول هوية='٨٥٦٨٩'>وَيْبَكَ</قول></مقطع>

    <مقطع هوية='٩٢٧٣٧'>وَلَا يَجُوْزُ <حرف>سَقْيَكَ</حرف></مقطع>

    <مقطع هوية='٣٦٥٣٠'>إِنَّمَا تُجْرِي ذا كَمَا أَجْرَتْ الْعَرَبُ</مقطع>
    <مقطع هوية='٥١٣٠٣'>وَمِثْلُ ذٰلِكَ <قول هوية='٢٢٣٠٧'>عَدَدْتُكَ</قول>
   </مقطع>
    <مقطع هوية='١١٥٥٧'>وَ<قول هوية='٨٢٧٧٦'>كِلْتُكَ</قول>
   </مقطع>
    <مقطع هوية='٢٨٣١٢'>وَ<قول هوية='٧٥٢٥٦'>وَزَنْتُكَ</قول>
   </مقطع>
    <مقطع هوية='١٣٠١٧'>وَلَا تَقُوْلُ <قول هوية='٤٨٥٦٣'>وَهَبْتُكَ</قول></مقطع>
    <مقطع هوية='٥٤٦١٤'>لِأَنَّهُمْ لَمْ يُعَدُّوْهُ</مقطع>
    <مقطع هوية='٨٢٢٩٧'>وَلٰكِنْ <قول هوية='٩٤٤٦٤'>وَهَبْتُ لَكَ</قول></مقطع>
    <مقطع هوية='٩٨٧٨٥'>وَهٰذَا حَرْفٌ لَا يُتَكَلَّمُ بِهِ مُفْرَدًا</مقطع>
    <مقطع هوية='٠١٧٣٣'>إِلَّا أَنْ يَكُوْنَ عَلَى  <حرف>وَيْلَك</حرف>
   </مقطع>
    <مقطع هوية='٥٢٥٤٧'>وَهُوَ قَوْلُكَ <قول هوية='٤٢٣٧٣'>وَيْلَكَ وَعَوْلَكَ</قول>
   </مقطع>
    <مقطع هوية='٩٧٧٠٣'>وَلَا يَجُوْزُ <قول هوية='٥٩٤٩٠'>عَوْلَكَ</قول>
   </مقطع>

