<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣١٨"
     درنبورج="١-٢٧٦"
     هارون="٢-٢١٥"
     يعقوب="٢-٢١٩"
     البكاء="٣-١١٢"
     رقم="١٥٣">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْب مَا يَكُوْن النِّدَاْء فِيْهِ مُضَاْفًا إِلَى الْمُنَاْدَى بحَرْف الْإِضَاْفَة</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذٰلِكَ فِي الْاِسْتِغَاْثَةِ وَالتَّعَجُّبِ وَذٰلِكَ الْحَرْفُ اللَّاْمُ الْمَفْتُوْحَةُ</مقطع>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ مُهَلْهِلُ</مقطع>
  <شاهدة رقم="١" xml:id="١٥٣-١">
    <بيت>
      <مصراع>يَا لَبَكْرٍ أَنْشِرُوْا لِي كُلَيْبًا</مصراع>
      <مصراع>يَا لَبَكْرٍ أَيْنَ أَيْنَ الْفِرَاْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤">فَاْسْتَغَاْثَ بِهِمْ لِيُنْشِرُوْا لَهُ كُلَيْبًا</مقطع>
  <مقطع رقم="٥">وَهٰذَا مِنْهُ وَعِيْدٌ وَتَهَدُّدٍ</مقطع>
  <مقطع رقم="٦">وَأَمَّا قَوْلُهُ <قول>يَا لَبِكْرٍ أَيْنَ أَيْنَ الْفِرَاْرُ</قول> فَإِنَّمَا اسْتَغَاْثَ بِهِمْ لَهُمْ</مقطع>
  <مقطع رقم="٧">أَيْ  <قبس>لَمَ تَفِرُّوْنَ</قبس>  اسْتَطَاْلَةً عَلَيْهِمْ وَوَعِيْدًا</مقطع>
  <مقطع رقم="٨">وَقَاْلَ أُمَيَّةُ بْنُ أَبِيْ عَاْئِذٍ الْهُذَلِيُّ</مقطع>
  <هارون مجلد="٢" صفحة="٢١٥"/>
  <شاهدة رقم="٢" xml:id="١٥٣-٢">
    <بيت>
      <مصراع>أَلَا يَا لَقَوْمِ لِطَيْفِ الْخَيَاْلِ</مصراع>
      <مصراع>أَرَّقَ مِنْ نَاْزِحٍ ذِي دَلَالِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٩">وَقَاْلَ قَيْسُ بْنُ ذَرِيْحٍ</مقطع>
  <شاهدة رقم="٣" xml:id="١٥٣-٣">
    <بيت>
      <مصراع>تَكَنَّفَنِي الْوُشَاْةُ فَأَزْعَجُوْنِي</مصراع>
      <مصراع>فَيَا لَلنّاْسِ لِلْوَاْشِي الْمُطَاْعِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠">وَقَاْلُوْا <قول>يَا لَلّٰهِ لِلنَّاْسِ</قول> إِذَا كَاْنَتْ الْاِسْتَغَاْثَةُ بِهِ</مقطع>
  <مقطع رقم="١١">فَالْوَاْحِدُ وَالجَمِيْعُ فِيْهِ سَوَاْءٌ</مقطع>
  <مقطع رقم="١٢">وَقَاْلَ الْآخَرُ</مقطع>
  <شاهدة رقم="٤" xml:id="١٥٣-٤">
    <بيت>
      <مصراع>يَا لَقَوْمِ مَنْ لِلعُلَى وَالْمَساْعِي</مصراع>
      <مصراع>يَا لَقَوْمِ مَنْ لِلنَّدَى وَالسَّمَاْحِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>يَا لَعَطَّاْفِنَا وَيَا لَرِيَاْحِ</مصراع>
      <مصراع>وَأَبِي الْحَشْرَجِ الْفَتَى النَّفَاْحِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٣">أَلَا تَرَاْهُمْ [ كَيْفَ ] سَوَّوْا بَيْنَ الْوَاْحِدِ وَالجَمِيْعِ</مقطع>
  <مقطع رقم="١٤">وَأَمَّا فِي التَّعَجُّبِ فَقَوْلُهُ [ هُوَ فَرَّاْرُ الْأَسَدِيّ ]</مقطع>
  <شاهدة رقم="٥" xml:id="١٥٣-٥">
    <بيت>
      <مصراع>لَخُطَّاْبُ لَيْلَى يَا لَبُرْثُنَ مِنْكُمُ</مصراع>
      <مصراع>أَدَلُّ وَأَمْضَى مِنْ سُلَيْكِ الْمَقَاْنِبِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٥">وَقَاْلُوْا <قول>يَا لَلْعَجَبِ</قول> وَ<قول>يَا لَلْفَلِيْقَةِ</قول>
  </مقطع>
  <مقطع رقم="١٦">كَأَنَّهُمْ رَأَوْا أَمْرًا عَجَبًا فَقَاْلُوْا <قول>يَا لَبُرْثُنَ</قول> أَيْ مِثْلُكُمْ دُعِيَ لِلْعَظَاْئِمِ</مقطع>
  <مقطع رقم="١٧">وَقَاْلُوْا <قول>يَا لَلْعَجَبِ</قول> وَ<قول>يَا لَلَمَاْءِ</قول> لَمَّا رَأَوْا عَجَبًا أَوْ رَأَوْا مَاْءً كَثِيْرًا</مقطع>
  <مقطع رقم="١٨">كَاْنَهُ يَقُوْلُ <قول>تَعَاْلَ يَا عَجَبُ</قول> [ أَوْ <قول>تَعَاْلَ يَا مَاْءُ</قول>]</مقطع>
  <مقطع رقم="١٩">فَإِنَّهُ مِنْ أَيَّاْمِكَ وَزَمَاْنَكَ</مقطع>
  <مقطع رقم="٢٠">وَمِثْلُ ذٰلِكَ قَوْلُهُمْ <قول>يَا لَلدَّوَاْهِي</قول> أَيْ <قول>تَعَاْلَيْنَ فَإِنَّهُ لَا يُسْتَنْكَرُ لَكُنَّ لِأَنَّهُ مِنْ أَيَّاْمِكُنَّ وَأَحْيَاْنِكُنَّ</قول>
  </مقطع>
  <مقطع رقم="٢١">وَكُلُّ هٰذَا فِي مَعْنَى التَّعَجُّبِ وَالْاِسْتِغَاْثَةِ وَإِلَّا لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٢٢">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول>يَا لَزَيْدٍ</قول> وَأَنْتَ تُحَدِّثُهُ لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٢٣">وَلَمْ يَلْزِمْ فِي هٰذَا الْبَاْبِ إِلَّا  <حرف>يَا</حرف>  لَلتَّنْبِيْهِ لِئَلَّا تَلْتَبْسُ هٰذِهِ اللَّاْمُ بِلَامِ التَوْكِيْدِ</مقطع>
  <مقطع رقم="٢٤">كَقَوْلِكَ <قول>لَعَمْرٌو خَيْرٌ مِنْكَ</قول>
  </مقطع>
  <مقطع رقم="٢٥">وَلَا يَكُوْنُ مَكَاْنُ  <حرف>يَا</حرف>  سِوَاْهَا مِنْ حُرُوْفِ التَّنْبِيْهِ نَحْوُ  <حرف>أَيْ</حرف>  وَ<حرف>هَيَا</حرف>  وَ<حرف>أَيَا</حرف>
  </مقطع>
  <مقطع رقم="٢٦">لِأَنَّهُم أَرَاْدُوا أَنْ يُمَيِّزُوْا هٰذَا مِنْ ذٰلِكَ الْبَاْبِ الَّذِي لَيْسَ فِيْهِ مَعْنَى اسْتِغَاْثَةٍ وَلَا تَعَجُّبٍ</مقطع>
  <مقطع رقم="٢٧">وَزَعَمَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّ هٰذِهِ اللَّاْمَ بَدَلٌ مِنَ الزِيَاْدَةِ الَّتِي تَكُوْنُ فِي آخِرِ الِٱسْمِ إِذَا أَضَفْتَ</مقطع>
  <مقطع رقم="٢٨">نَحْوُ قَوْلِكَ <قول>يَا عَجَبَاهْ</قول> وَ<قول>يَا بَكْرَاهْ</قول> إِذَا اسْتَغْثْتَ أَوْ تَعَجَّبْتَ</مقطع>
  <مقطع رقم="٢٩">فَصَاْرَ كُلُّ وَاْحِدٍ مِنْهُمَا يُعَاْقِبُ صَاْحِبَهُ كَمَا كَاْنَتْ هَاْءُ الْـ<حرف>جَحَاْجِحَةِ</حرف>  مُعَاْقِبَةَ يَاْءِ الْـ<حرف>جَحَاْجِيْحِ</حرف>
  </مقطع>
  <مقطع رقم="٣٠">وَكَمَا عَاْقَبَتِ الْأَلِفُ فِي  <حرف>يَمَاْنٍ</حرف>  الْيَاْءُ فِي  <حرف>يَمَنِيٍّ</حرف>
  </مقطع>
  <مقطع رقم="٣١">وَنَحْوُ هٰذَا فِي كَلَامِهِمْ كَثِيْرٌ وَسَتَرَاْهُ إِنْ شَاْءَ اللّٰهُ عَزَّ وَجَلَّ</مقطع>

