  <عنوان>

    <مقطع هوية='٣٦٢٤٩'>هَذَا بَاْبُ الْفَاْعِلِ الَّذِي يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع هوية='٦٤٣٧٩'>وَلَيْسَ لَكَ أَنْ تَقْتَصِرَ عَلَى أَحَدِ الْمَفْعُوْلَيْنِ دُوْنَ الْآخَرِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٠٧٩٨'>وَذٰلِكَ قَوْلُكَ <قول هوية='٦٠٤٦١'>حَسِبَ عَبْدُ اللهِ زَيْدًا بَكْرًا</قول>
  </مقطع>
  <مقطع هوية='٣٦٦٨٨'>وَ<قول هوية='٢٩٩٢٣'>ظَنَّ عَمْرٌو خَاْلِدًا أَبَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٩٨٥٤٧'>وَ<قول هوية='٦٩٨٠٦'>خَاْلَ عَبْدُ اللهِ زَيْدًا أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٧٨١٩٧'>وَمِثْلُ ذٰلِكَ <قول هوية='٢٣٧٥٣'>رَأَى عَبْدُ اللهِ زَيْدًا صَاْحِبَنَا</قول>
  </مقطع>
  <مقطع هوية='٦٩٩٥٥'>وَ<قول هوية='٠٦٠٩٩'>وَجَدَ عَبْدُ اللهِ زَيْدًا ذَا الْحِفَاْظِ</قول>
  </مقطع>
  <مقطع هوية='٢٥٣٦٨'>وَإِنَّمَا مَنَعَكَ أَنْ تَقْتَصِرَ عَلَى أَحَدِ الْمَفْعُوْلَيْنِ هٰهُنَا</مقطع>
  <مقطع هوية='٢٢٩٨٠'>أَنَّكَ إِنَّمَا أَرَدْتَ أَنْ تُبَيِّنَ مَا اسْتَقَرَّ عِنْدَكَ</مقطع>
  <مقطع هوية='٧٧٧٦٣'>مِنْ حَاْلِ الْمَفْعُوْلِ الْأَوَّلِ يَقِيْنًا كَاْنَ أَوْ شَكًّا</مقطع>
  <مقطع هوية='٦٥٥٤٧'>وَذَكَرْتَ الْأَوَّلَ لِتُعْلِمَ الَّذِي تُضِيْفُ إِلَيْهِ</مقطع>
  <مقطع هوية='٠٧١٢٠'>مَا اسْتَقَرَّ لَهُ عِنْدَكَ مَنْ هُوَ</مقطع>
  <مقطع هوية='٠٠٦١٨'>فَإِنَّمَا ذَكَرْتَ <حرف>ظَنَنْتُ</حرف> وَنَحْوَهُ</مقطع>
  <مقطع هوية='٧٦٣٠١'>لِتَجْعَلَ خَبَرَ الْمَفْعُوْلِ الْأَوَّلِ يَقِيْنًا أَوْ شَكًّا</مقطع>
  <مقطع هوية='٠٧٩٨٢'>وَلَمْ تُرِدْ أَنْ تَجْعَلَ الْأَوَّلَ فِيْهِ الشَّكُّ</مقطع>
  <مقطع هوية='١١٠٦٨'>أَوْ تَعْتَمِدَ عَلَيْهِ فِي الْيَقِيْنِ
<!--   <بدل نص="بك"> -->
<!--   <بك>تَعْتَمِدَ عَلَيْهِ فِي الْيَقِيْنِ</بك> -->
<!--   <ها>تُقِيمَ عَلَيْهِ فِي الْيَقِيْنِ</ها> -->
<!--   <يع>تَعْتَمِدَ عَلَيْهِ بِالتَّيَقُّنِ</يع> -->
<!-- </بدل> -->
  </مقطع>
  <مقطع هوية='٩١٦٨٨'>وَمِثْلُ ذٰلِكَ <قول هوية='٦٥٥٣٣'>عَلِمْتُ زَيْدًا الظَّرِيْفَ</قول>
  </مقطع>
  <مقطع هوية='٦٣٤٧٣'>وَ<قول هوية='٢٥٨١١'>زَعَمَ عَبْدُ اللهِ زَيْدًا أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٩٦٥٤٢'>وَإِنْ قُلْتَ <حرف>رَأَيْتُ</حرف> فَأَرَدْتَ رُؤْيَةَ الْعَيْنِ</مقطع>
  <مقطع هوية='٥١٨٠٤'>أَوْ <حرف>وَجَدْتُ</حرف> فَأَرَدْتَ وَِجْدَاْنَ الضَّالَّةِ</مقطع>
  <مقطع هوية='٦١٧٣٨'>فَهُوَ بِمَنْزِلَةِ <حرف>ضَرَبْتُ</حرف>
  </مقطع>
  <مقطع هوية='١٦٥٤٧'>وَلٰكِنَّكَ إِنَّمَا تُرِيْدُ ب‍ِِـ<حرف>وَجَدْتُ</حرف> عَلِمْتُ</مقطع>
  <مقطع هوية='٦٩٨٤٠'>وَبِـ<حرف>رَأَيْتُ</حرف> ذٰلِكَ أَيْضًا</مقطع>
  <مقطع هوية='٤٢٢٢٥'>أَلَا تَرَى أَنَّهُ يَجُوْزُ لِلْأَعْمَى</مقطع>
  <مقطع هوية='٥٤٣٠٠'>أَنْ يَقُوْلَ <قول هوية='٨٤١٦١'>رَأَيْتُ زَيْدًا الصَّاْلِحَ</قول>
  </مقطع>
  <مقطع هوية='٣٣٢٢٨'>وَقَدْ يَكُوْنُ <حرف>عَلِمْتُ</حرف> بِمَنْزِلَةِ <حرف>عَرَفْتُ</حرف>
  </مقطع>
  <مقطع هوية='١٣٢٩٣'>لَا تُرِيْدُ إِلَّا عِلْمَ الْأَوَّلِ</مقطع>
  <مقطع هوية='٢٣٣٥٠'>فَمِنْ ذٰلِكَ قَوْلُهُ تَعَاْلَى</مقطع>
  <مقطع هوية='٧٢٣٥١'>
    <آية هوية='٢٣٨٠٧' سورة="٢" آية="٦٥">وَلَقَدْ عَلِمْتُمُ الَّذِيْنَ اعْتَدَوْا مِنْكُمْ فِي السَّبْتِ</آية>
  </مقطع>
  <مقطع هوية='٣٥٥٢٣'>وَقَاْلَ سُبْحَاْنَهُ</مقطع>
  <مقطع هوية='٣٥٧٣٢'>
    <آية هوية='٢٠٩٤٤' سورة="٨" آية="٦٠">وءَاخَرِيْنَ مِنْ دُوْنِهِمْ لَا تَعْلَمُوْنَهُمُ اللَّهُ يَعْلَمُهُمْ</آية>
  </مقطع>
  <مقطع هوية='٤٥٥٥٧'>فَهِيَ هٰهُنَا بِمَنْزِلَةِ <حرف>عَرَفْتُ</حرف>
  </مقطع>
  <مقطع هوية='٨٢٤٣٠'>كَمَا كَانَتْ <حرف>رَأَيْتُ</حرف> عَلَى وَجْهَيْنِ</مقطع>
  <مقطع هوية='٠٥٦٣٨'>وَأَمَّا <قول هوية='٤٤١١٠'>ظَنَنْتُ ذَاْكَ</قول>
  </مقطع>
  <!-- <بدل> -->
  <!-- <يع>[الظَّنَّ]</يع> -->
  <!-- </بدل> -->
  <مقطع هوية='٨٣٩٥٥'>فَإِنَّمَا جَاْزَ الْسُّكُوْتُ عَلَيْهِ</مقطع>
  <مقطع هوية='٤٠٠٠٧'>لِأَنَّكَ قَدْ تَقُوْلُ <حرف>ظَنَنْتُ</حرف> فَتَقْتَصِرُ كَمَا تَقُوْلُ <حرف>ذَهَبْتُ</حرف>
  </مقطع>
  <مقطع هوية='١٥١٤٣'>ثُمَّ تُعْمِلُهُ فِي الظَّنِّ كَمَا تُعْمِلُ <حرف>ذَهَبْتَ</حرف> فِي الذَّهَاْبِ</مقطع>
  <مقطع هوية='٤٣٥٣٦'>فَـ<حرف>ذَاْكَ</حرف> هٰهُنَا هُوَ الظَّنُّ</مقطع>
  <مقطع هوية='٢٣٠٥٥'>كَأَنَّكِ قُلْتَ <قول هوية='٤٧١٩١'>ظَنَنْتُ ذَاكَ الظَّنَّ</قول>
  </مقطع>
  <مقطع هوية='٩٩٢٧٣'>وَكَذٰلِكَ <حرف>خِلْتُ</حرف> وَ<حرف>حَسِبْتُ</حرف>
  </مقطع>
  <مقطع هوية='٨٥١٧٨'>وَيَدُلُّكَ عَلَى أَنَّهُ الظَّنُّ</مقطع>
  <مقطع هوية='٦٥٤٤٠'>أَنَّكَ لَوْ قُلْتَ <قول هوية='٢٥٢١٤'>خِلْتُ زَيْدًا</قول> وَ<قول هوية='٠٤٣٥٨'>أُرَى زَيْدًا</قول> لَمْ يَجُزْ</مقطع>
  <مقطع هوية='٥٥٥٣٥'>وَتَقُوْلُ <قول هوية='٠٢٣١٧'>ظَنَنْتُ بِهِ</قول> جَعَلْتَـ<حرف>ـهُ</حرف> مَوْضِعَ ظَنِّكَ</مقطع>
  <مقطع هوية='٥٩٦٦٤'>كَمَا قُلْتَ <قول هوية='٢٩٥٩٦'>نَزَلَتُ بِهِ</قول> وَ<قول هوية='٠١٧٦٢'>نَزَلْتُ عَلَيْهِ</قول>
  </مقطع>
  <مقطع هوية='٢٥٩٢٦'>وَلَوْ كَاْنَتِ الْبَاْءُ زَاْئِدَةً</مقطع>
  <مقطع هوية='٧٨٤٧٨'>بِمَنْزِلَتِهَا فِي قَوْلِهِ عَزَّ وَجَلَّ <آية هوية='٣٣٨٢٢' سورة="" آية="">كَفَى بِاللهِ</آية>
  </مقطع>
  <مقطع هوية='٤٧٦٨٦'>لَمْ يَجُزْ السَّكْتُ عَلَيْهَا</مقطع>
  <مقطع هوية='٠٢١٩٢'>فَكَأَنَّكَ قُلْتَ <قول هوية='٣٠٨٢٤'>ظَنَنْتُ فِي الدَّاْرِ</قول>
  </مقطع>
  <مقطع هوية='٢١٣٤٥'>وَمِثْلُهُ <قول هوية='٩١٧٩٢'>شَكَكْتُ فِيْهِ</قول>
  </مقطع>
