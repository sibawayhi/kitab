<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٨"
     درنبورج="١-٢١"
     البكاء="١-١٢٠"
     هارون="١-٥٧"
     يعقوب="١-١٠١"
     رقم="١٩">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا أُجْرِيَ مَجْرَى <حرف>لَيْسَ</حرف>
    </مقطع>
    <مقطع رقم="٢">فَِي بَعْضِ الْمَوَاْضِعِ بِلُغَةِ أَهْلِ الْحِجَاْزِ</مقطع>
    <مقطع رقم="٣">ثُمَّ يَصِيْرُ إِلَى أَصْلِهِ</مقطع>
  </عنوان>
  <مقطع رقم="٤">وَذٰلِكَ الْحَرْفُ <حرف>مَا</حرف>
  </مقطع>
  <مقطع رقم="٥">تَقُوْلُ <قول رقم="١">مَا عَبْدُ اللهِ أَخَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٦">وَ<قول رقم="٢">مَا زَيْدٌ مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٧">وَأَمَّا بَنُو تَمِيْمٍ فَيُجْرُوْنَهَا مَجْرَى <حرف>أَمَّا</حرف> وَ<حرف>هَلْ</حرف>
  </مقطع>
  <مقطع رقم="٨">أَي لَا يُعْمِلُوْنَهَا فِي شِيءٍ</مقطع>
  <مقطع رقم="٩">وَهُوَ الْقِيَاْسُ</مقطع>
  <مقطع رقم="١٠">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَيْسَ <حرف>مَا</حرف> كَـ<حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="١١">وَلَا يَكُوْنُ فِيْهَا إِضْمَاْرٌ</مقطع>
  <مقطع رقم="١٢">وَأَمَّا أَهْلُ الْحِجَاْزِ فَيُشَبِّهُوْنَهَا بِـ<حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="١٣">إِذْ كَاْنَ مَعْنَاْهَا كَمَعْنَاْهَا</مقطع>
  <مقطع رقم="١٤">كَمَا شَبَّهُوْا بِهَا <حرف>لَاتَ</حرف> فِي بَعْضِ الْمَوَاْضِعِ</مقطع>
  <مقطع رقم="١٥">وَذٰلِكَ مَعَ <حرف>الْحِيْنِ</حرف> خَاْصَّةً لَا تَكُوْنُ <حرف>لَاتَ</حرف> إِلَّا مَعَ الْحِيْنِ</مقطع>
  <مقطع رقم="١٦">تُضْمِرُ فِيْهَا مَرْفُوْعًا وَتَنْصِبُ الْحِيْنِ لِأَنَّهُ مَفْعُوْلٌ بِهِ</مقطع>
  <مقطع رقم="١٧">وَلَمْ تَمَكَّنْ تَمَكُّنَهَا وَلَمْ تُسْتَعْمَلْ إِلَّا مُضْمَرًا فِيْهًا</مقطع>
  <مقطع رقم="١٨">لِأَنَّهَا لَيْسَتْ كَـ<حرف>لَيْسَ</حرف> فِي الْمُخَاْطَبَةِ وَالْإِخْبَاْرِ عَنْ غَاْئِبٍ</مقطع>
  <مقطع رقم="١٩">تَقُوْلُ <حرف>لَسْتَ</حرف> وَ<حرف>لَسْتِ</حرف> وَ<حرف>لَيْسُوْا</حرف>
  </مقطع>
  <مقطع رقم="٢٠">وَ<قول رقم="٣">عَبْدُ اللهِ لَيْسَ ذَاْهِبًا</قول>
  </مقطع>
  <مقطع رقم="٢١">فَتَبْنِي عَلَى الْمُبْتَدَإِ وَتُضْمِرُ فِيْهِ</مقطع>
  <مقطع رقم="٢٢">وَلَا يَكُوْنُ هٰذَا فِي <حرف>لَاتَ</حرف>
  </مقطع>
  <مقطع رقم="٢٣">لَا تَقُوْلُ <قول رقم="٤">عَبْدُ اللهِ لَاتَ مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٢٤">وَلَا <قول رقم="٥">قَوْمُكَ لَاتُوا مُنْطَلِقينَ</قول>
  </مقطع>
  <مقطع رقم="٢٥">وَنَظِيرُ <حرف>لَاتَ</حرف> فِي أَنَّهُ لَا يَكُوْنُ إِلَّا مُضْمَرًا فِيْهِ <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="٢٦">وَ <حرف>لَا يَكُوْنُ</حرف> فِي الِاسْتِثْنَاْءِ</مقطع>
  <مقطع رقم="٢٧">إِذَا قُلْتَ <قول رقم="٦">أَتَوْنِي لَيْسَ زَيْدًا وَلَا يَكُوْنُ بِشْرًا</قول>
  </مقطع>
  <مقطع رقم="٢٨">وَزَعَمُوْا أَنَّ بَعْضَهُمْ قَرَأَ <آية سورة="٣٨" آية="٣">وَ لَاتَ حِيْنُ مَنَاْصٍ</آية>
  </مقطع>
  <مقطع رقم="٢٩">وَهِيَ قَلِيْلَةٌ</مقطع>
  <مقطع رقم="٣٠">كَمَا قَاْلَ بَعْضُهُمْ فِي قَوْلِ سَعْدِ بْنِ مَاْلِكٍ الْقَيْسِىِّ</مقطع>
  <شاهدة مقطع="٣١" رقم="١">
    <بيت>
      <مصراع>مَنْ فَرَّ عَنْ نِيْرَاْنِهَا</مصراع>
      <مصراع>فَأَنَا ابْنُ قَيْسٍ لَا بَرَاْحُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٢">جَعَلَهَا بِمَنْزِلَةِ <حرف>لَيْسَ</حرف> فَهِيَ بِمَنْزِلَةِ <حرف>لَاتَ</حرف> فِي هٰذَا الْوَجْهِ</مقطع>
  <!--
      البكاء: جَعَلَهَا بِمَنْزِلَةِ <حرف>لَيْسَ</حرف> فَرَفَعَ الِاسْمَ وَأَضْمَرَ الْخَبَرَ وَكَذٰلِكَ
      <حرف>لا</حرف> إِذَا رفع فَقَدْ أَصْمَرَ جَبَرًا مَنْصُوْبًا فهِيَ بِمَنْزِلَةِ
      <حرف>لَاتَ</حرف> فِي هٰذَا الْمَوْضِعِ فِي الرَّفْعِ
  -->
  <مقطع رقم="٣٣">وَلَا يُجَاوَزُ بِهَا هٰذَا <بدل>الْمَوْضِع [الْحِيْنِ]</بدل> رَفَعْتَ أَوْ نَصَبْتَ</مقطع>
  <مقطع رقم="٣٤">وَلَا تَمَكَّنُ فِي الْكَلَامِ كَتَمَكُّنِ <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="٣٥">وَإِنَّمَا هِيَ مَعَ <حرف>الْحِيْنِ</حرف>
  </مقطع>
  <مقطع رقم="٣٦">كَمَا أَنَّ <حرف>لَدُنْ</حرف> إِنَّمَا يُنْصَبُ بِهَا مَعَ <حرف>غُدْوَةً</حرف>
  </مقطع>
  <مقطع رقم="٣٧">وَكَمَا أَنَّ التَّاْءَ لَا تَجُرُّ فِي الْقَسَمِ وَِلَا فِي غَيْرِهِ إِلَّا فِي <حرف>اللهِ</حرف>
  </مقطع>
  <مقطع رقم="٣٨">إِذَا قُلْتَ <قول رقم="٧">تَاللهِ لأَفْعَلَنَّ</قول>
  </مقطع>
  <مقطع رقم="٣٩">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ <آية سورة="١٢" آية="٣١">مَا هٰذَا بَشَرًا</آية> فِي لُغَةِ أَهْلِ الْحِجَاْزِ</مقطع>
  <مقطع رقم="٤٠">وَبَنُو تَمِيْمٍ يَرْفَعُوْنَهَا إِلَّا مَنْ <بدل>
  <متن مصدر="يع">عَرَفَ</متن>
  <بك>دَرَى</بك>
  <ها>دَرَى</ها>
  </بدل> كَيْفَ هِيَ فِي الْمُصْحَفِ</مقطع>
  <مقطع رقم="٤١">فَإِذَا قُلْتَ <قول رقم="٨">مَا مُنْطَلِقٌ عُبْدُ اللهِ</قول> أَوْ <قول رقم="٩">مَا مُسِيءٌ مَنْ أَعْتَبَ</قول> رَفَعْتَ</مقطع>
  <مقطع رقم="٤٢">وَلَا يَجُوْزُ أَنْ يَكُوْنَ مُقَدَّمًا مِثْلَهُ مُؤَخَّرًا</مقطع>
  <مقطع رقم="٤٣">كَمَا أَنَّهُ لَا يَجُوْزُ أَنْ تَقُوْلَ <قول رقم="١٠">إِنَّ أَخُوْكَ عَبْدَ اللهِ</قول>
  </مقطع>
  <مقطع رقم="٤٤">عَلَى حَدِّ قَوْلِكَ <قول رقم="١١">إِنَّ عَبْدَ اللهِ أَخُوْكَ</قول>
  </مقطع>
  <مقطع رقم="٤٥">لِأَنَّهَا لَيْسَتْ بِفِعْلٍ وَإِنَّمَا جُعِلَتْ بِمَنْزِلَتِهِ</مقطع>
  <مقطع رقم="٤٦">فَكَمَا لَمْ تَتَصَرَّفُ <حرف>إِنَّ</حرف> كَالْفِعْلِ</مقطع>
  <مقطع رقم="٤٧">كَذٰلِكَ لَمْ يَجُزْ فِيْهَا كُلُّ مَا يَجُوْزُ فِيْهِ وَلَمْ تَقْوَ قُوَّتَهُ</مقطع>
  <مقطع رقم="٤٨">فَكَذٰلِكَ <حرف>ما</حرف>
  </مقطع>
  <مقطع رقم="٤٩">وَتَقُوْلُ <قول رقم="١٢">مَا زَيْدٌ إِلَّا مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٥٠">تَسْتَوِي فِيْهِ اللُّغَتَاْنَ</مقطع>
  <مقطع رقم="٥١">وَمِثْلُهُ قَوْلُهُ عَزَّ وَجَلَّ <آية سورة="٣٦" آية="١٥">مَا أَنْتُمْ إِلَّا بَشَرٌ مِثْلُنَا</آية>
  </مقطع>
  <مقطع رقم="٥٢">لَمْ تَقْوَ <حرف>مَا</حرف> حَيْثُ نَقَضْتَ مَعْنَى <حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="٥٣">كَمَا لَمْ تَقْوَ حِيْنَ قَدَّمْتَ الْخَبَرَ</مقطع>
  <مقطع رقم="٥٤">فَمَعْنَى <حرف>لَيْسَ</حرف> النَّفْيُ</مقطع>
  <مقطع رقم="٥٥">كَمَا أَنَّ مَعْنَى <حرف>كَاْنَ</حرف> الْوَاْجِبُ</مقطع>
  <مقطع رقم="٥٦">وَكُلُّ وَاْحِدٍ <!-- [واْحِدَةٍ] -->مِنْهُمَا</مقطع>
  <مقطع رقم="٥٧">يَعْنِي <حرف>كَانَ</حرف> وَ<حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="٥٨">إِذَا جَرَّدْتَهُ <!-- [هَاْ] -->فَهَذَا مَعْنَاهُ <!-- [هَاْ] --></مقطع>
  <مقطع رقم="٥٩">فَإِنْ قَلْتَ <حرف>مَا كَانَ</حرف> أَدْخَلْتَ عَلَيْهَا مَا يُنْفَى بِهِ</مقطع>
  <مقطع رقم="٦٠">فَإِنْ قُلْتَ <قول رقم="١٣">لَيْسَ زَيْدٌ إِلَّا ذَاهِبًا</قول>
  </مقطع>
  <مقطع رقم="٦١">أَدْخَلْتَ مَا يُوْجِبُ</مقطع>
  <مقطع رقم="٦٢">كَمَا أَدْخَلْتَ مَا يَنْفِي</مقطع>
  <مقطع رقم="٦٣">فَلَمْ تَقْوَ <حرف>مَا</حرف> فِي بَاْبِ قَلْبِ الْمَعْنَى</مقطع>
  <مقطع رقم="٦٤">كَمَا لَمْ تَقْوَ فِي تَقْدِيْمِ الْخَبَرِ</مقطع>
  <مقطع رقم="٦٥">وَزَعَمُوْا أَنَّ بَعْضَهُمْ قَالَ وَهُوَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="٦٦" رقم="٢">
    <بيت>
      <مصراع>فَأَصْبَحُوْا قَدْ أَعَاْدَ اللهُ نِعْمَتَهُمْ</مصراع>
      <مصراع>إِذْ هُمْ قُرَيْشٌ وَإِذْ مَا مِثْلَهُمْ بَشَرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٧">وَهٰذَا لَا يَكَاْدُ يُعْرَفُ</مقطع>
  <مقطع رقم="٦٨">كَمَا أَنَّ <حرف>لَاتَ حَيْنُ مَنَاْصٍ</حرف> كَذلُك</مقطع>
  <مقطع رقم="٦٩">وَرُبَّ شَيْءٍ هَكَذَا</مقطع>
  <مقطع رقم="٧٠">وَهُوَ كَقَوْلِ بَعْضِهِمْ <قول رقم="١٤">هَذِهِ مِلْحَفَةٌ جَدِيْدَةٌ</قول> فِي الِقْلّة</مقطع>
  <مقطع رقم="٧١">وَتَقُولَ <قول رقم="١٥">مَا عَبْدُ اللهِ خَاْرِجًا وَلَا مَعْنٌ ذَاْهِبٌ</قول>
  </مقطع>
  <مقطع رقم="٧٢">تَرْفَعُهُ عَلَى أَنْ لَا تُشْرِكَ الِاسْمَ الْآخِرَ فِي <حرف>مَا</حرف> وَلَكِن تَبْتَدِئُهُ</مقطع>
  <مقطع رقم="٧٣">كَمَا تَقُوْلُ <قول رقم="١٦">مَا كَاْنَ عَبْدُ اللهِ مُنْطَلِقًا وَلَا زَيْدٌ ذَاْهِبٌ</قول>
  </مقطع>
  <مقطع رقم="٧٤">إِذَا لَمْ تَجْعَلْهُ عَلَى <حرف>كَاْنَ</حرف> وَجَعَلْتَهُ غَيْرَ ذَاْهِبٍ الآنَ</مقطع>
  <مقطع رقم="٧٥">وَكَذَلكِ <حرف>لَيس</حرف>
  </مقطع>
  <مقطع رقم="٧٦">وَإِنَ شِئْتَ جَعَلَتْهَا <حرف>لَا</حرف> الَّتِي يَكُوْنُ فِيْهَا الِاشْتِرَاْكُ فَتَنْصِبُ</مقطع>
  <مقطع رقم="٧٧">كَمَا تَقُوْلُ فِي <حرف>كَاْنَ</حرف>
  <قول رقم="١٧">مَا كَاْنَ زَيْدٌ ذَاْهِبًا وَلَا عَمْرٌو مُنطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٧٨">وَذَلكِ قَوْلُكَ <قول رقم="١٨">لَيْسَ زَيْدٌ ذَاْهِبًا وَلَا أَخُوْكَ مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٧٩">وَكَذٰلِكَ <قول رقم="١٩">مَا زَيْدٌ ذَاْهِبًا وَلَا مَعْنٌ خَاْرِجًا</قول>
  </مقطع>
  <مقطع رقم="٨٠">وَلَيْسَ قَوْلُهُمْ <قبس>لَا يَكُوْنُ فِي <حرف>مَا</حرف> إِلَّا الرَّفْعُ</قبس> بِشَيْءٍ</مقطع>
  <مقطع رقم="٨١">لِأَنَّهُمْ يَحْتَجُّوْنَ بِأَنَّكَ لَا تَسْتَطِيْعُ أَنْ تَقُوْلَ وَلَا لَيْسَ وَلَا مَا</مقطع>
  <مقطع رقم="٨٢">فَأَنْتَ تَقُوْلُ <قول رقم="٢٠">لَيْسَ زَيْدٌ وَلَا أَخُوْهُ ذَاْهِبَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٨٣">وَ<قول رقم="٢١">مَا عَمْرٌو وَلَا خَاْلِدٌ مُنْطَلِقَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٨٤">فَتُشْرِكُهُ مَعَ الْأَوَّلِ فِي <حرف>لَيْسَ</حرف> وَفِي <حرف>مَا</حرف>
  </مقطع>
  <مقطع رقم="٨٥">فَمَا يَجُوْزُ فِيْهَا الْوَجْهَاْنِ</مقطع>
  <مقطع رقم="٨٦">كَمَا يَجُوْزُ فِي <حرف>كَاْنَ</حرف>
  </مقطع>
  <مقطع رقم="٨٧">إِلَّا أَنَّكَ إِنْ حَمَلْتَهُ عَلَى الْأَوَّلِ أَوِ ابْتَدَأْتَ</مقطع>
  <مقطع رقم="٨٨">فَالْمَعْنَى أَنَّكَ تَنْفِي شَيْئًا غَيْرَ كَاْئِنٍ فِي حَاْلِ حَدِيْثِكَ</مقطع>
  <مقطع رقم="٨٩">وَكَاْنَ الِابْتِدَاْءُ فِي <حرف>كَاْنَ</حرف> أَوْضَحَ</مقطع>
  <مقطع رقم="٩٠">لِأَنَّ الْمَعْنَى يَكُوْنُ عَلَى مَا مَضَى وَعَلَى مَا هُوَ الآنَ</مقطع>
  <مقطع رقم="٩١">وَلَيْسَ يَمْتَنِعُ أَنْ يُرَاْدَ بِهِ الْأَوّلُ</مقطع>
  <مقطع رقم="٩٢">كَمَا أَرَدْتَ فِي <حرف>كَاْنَ</حرف>
  </مقطع>
  <مقطع رقم="٩٣">وَمِثْلُ ذٰلِكَ قَوْلُكَ <قول رقم="٢٢">إِنَّ زَيْدًا ظَرِيْفٌ وَعَمْرٌو</قول> وَ<حرف>عَمْرًا</حرف>
  </مقطع>
  <مقطع رقم="٩٤">فَالْمَعْنَى فِي الْحَدِيْثِ وَاْحِدٌ</مقطع>
  <مقطع رقم="٩٥">وَمَا يُرَاْدُ مِنَ الْإِعْمَاْلِ مُخْتَلِفٌ فِي <حرف>كَاْنَ</حرف> وَ<حرف>لَيْسَ</حرف>
  </مقطع>
  <مقطع رقم="٩٦">وَتَقُوْلُ <قول رقم="٢٣">مَا زَيْدٌ كَرِيْمًا وَلَا عَاْقِلًا أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="٩٧">تَجْعَلُهُ كَأَنَّهُ لِلْأَوَّلِ بِمَنْزِلَةِ <حرف>كَرِيْمٍ</حرف>
  </مقطع>
  <مقطع رقم="٩٨">لِأَنَّهُ مُلْتَبِسٌ بِهِ إِذَا قُلْتَ <حرف>أَبُوْهُ</حرف>
  </مقطع>
  <مقطع رقم="٩٩">تُجْرِيْهُ عَلَيْهِ كَمَا أَجْرَيْتَ عَلَيْهِ الْـ<حرف>كَرِيْمَ</حرف>
  </مقطع>
  <مقطع رقم="١٠٠">لِأَنَّكَ لَوْ قُلْتَ <قول رقم="٢٤">مَا زَيْدٌ عَاْقِلًا أَبُوْهُ</قول> نَصَبْتَ وَكَاْنَ كَلَاْمًا</مقطع>
  <مقطع رقم="١٠١">وَتَقُوْلُ <قول رقم="٢٥">مَا زَيْدٌ ذَاْهِبًا وَلَا عَاْقِلٌ عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١٠٢">لِأَنَّكَ لَوْ قُلْتَ <قول رقم="٢٦" ج="*">مَا زَيْدٌ عَاْقِلًا عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١٠٣">لَمْ يَكُنْ كَلَاْمًا لِأَنَّهُ لَيْسَ مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="١٠٤">فَتَرْفَعُهُ عَلَى الِابْتِدَاْءِ وَالْقَطْعِ مِنَ الْأَوَّلِ</مقطع>
  <مقطع رقم="١٠٥">كَأَنَّكَ قُلْتَ <قول رقم="٢٧"><تقدير>مَا زَيْدٌ عَاْقِلًا</تقدير> وَمَا عَاْقِلٌ عَمْرٌو</قول></مقطع>
  <مقطع رقم="١٠٦">وَلَوْ جَعَلْتَهُ مِنْ سَبَبِهِ لَكَاْنَ فِيْهِ لَهُ إِضْمَاْرٌ</مقطع>
  <مقطع رقم="١٠٧">كَالْهَاْءِ فِي الـ<حرف>أَبِ</حرف> وَنَحْوِهِا</مقطع>
  <مقطع رقم="١٠٨">وَلَمْ يَجُزْ نَصْبُهُ عَلَى <حرف>مَا</حرف>
  </مقطع>
  <مقطع رقم="١٠٩">لِأَنَّكَ لَوْ ذَكَرْتَ <حرف>مَا</حرف> ثُمَّ قَدَّمْتَ الْخَبَرَ لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
  <مقطع رقم="١١٠">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٢٨">مَا زَيْدٌ ذَاْهِبًا وَلَا كَرِيْمٌ أَخُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١١١">إِنِ ابْتَدَأْتَهُ وَلَمْ تَجْعَلْهُ عَلَى <حرف>مَا</حرف>
  </مقطع>
  <مقطع رقم="١١٢">كَمَا فَعَلْتَ ذٰلِكَ حِيْنَ بَدَأْتَ بِالاْسِمِ</مقطع>
  <مقطع رقم="١١٣">وَلٰكِنَّ <حرف>لَيْسَ</حرف> وَ<حرف>كَانَ</حرف> يَجُوْزُ فِيْهِمَا النَّصْبُ</مقطع>
  <مقطع رقم="١١٤">وَإِنْ قَدَّمْتَ الْخَبَرَ وَلَمْ يَكُنْ مُلْتَبِسًا</مقطع>
  <مقطع رقم="١١٥">لِأَنَّكَ لَوْ ذَكَرْتُهُمَا كَانَ الْخَبَرُ فِيْهِمَا مُقَدَّمًا مِثْلَهُ مُؤَخَّرًا</مقطع>
  <مقطع رقم="١١٦">وَذٰلِكَ قَوْلُكَ <قول رقم="٢٩">مَا كَاْنَ زَيْدٌ ذَاْهِبًا وَلَا قَاْئِمًا عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١١٧">وَتَقُوْلُ <قول رقم="٣٠">مَا زَيْدٌ ذَاْهِبًا وَلَا مُحْسِنٌ زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١١٨">الرَّفْعُ أَجْوَدُ وَإِنْ كُنْتَ تُرِيْدُ الْأَوَّلَ</مقطع>
  <مقطع رقم="١١٩">لِأَنَّكَ لَوْ قُلْتَ <قول رقم="٣١" ج="*">مَا زَيْدٌ مُنْطَلِقًا زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٢٠">لَمْ يَكُنْ حَدَّ الْكَلَامِ وَكَانَ هٰهُنَا ضَعِيْفًا</مقطع>
  <مقطع رقم="١٢١">وَلَمْ يَكُنْ كَقَوْلِكَ <قول رقم="٣٢">مَا زَيْدٌ مُنْطَلِقًا هُوَ</قول>
  </مقطع>
  <مقطع رقم="١٢٢">لِأَنَّكَ قَدْ اسْتَغْنَيْتَ عَنْ إِظْهَاْرِهِ</مقطع>
  <مقطع رقم="١٢٣">وَإِنَّمَا يَنْبَغِي لَكَ أَنْ تُضْمِرَهُ</مقطع>
  <مقطع رقم="١٢٤">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول رقم="٣٣" ج="*">مَا زَيْدٌ مُنْطَلِقًا أَبُوْ زَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١٢٥">لَمْ يَكُنْ كَقَوْلِكَ <قول رقم="٣٤">مَا زَيْدٌ مُنْطَلِقًا أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٢٦">لِأَنَّكَ قَدْ اسْتَغْنَيْتَ عَنْ الْإِظْهَاْرِ</مقطع>
  <مقطع رقم="١٢٧">فَلَّمَا كَاْنَ هٰذَا كَذٰلِكَ أُجْرِيَ مُجْرَى الْأَجْنَّبِيِّ</مقطع>
  <مقطع رقم="١٢٨">وَاسْتُؤْنِفَ عَلَى حَاْلِهِ <!-- [حِيالِهِ] -->حَيْثُ كَاْنَ هٰذَا ضَعِيْفًا فِيْهِ</مقطع>
  <مقطع رقم="١٢٩">وَقَدْ يَجُوْزُ أَنْ تَنْصِبَ</مقطع>
  <مقطع رقم="١٣٠">قَالَ الشَّاْعِرُ وَهُوَ سَوَاْدُ بْنُ عَدِيٍّ</مقطع>
  <شاهدة مقطع="١٣١" رقم="٣">
    <بيت>
      <مصراع>لَا أَرَى الْمَوْتَ <ثبات>يَسْبِقُ الْمَوْتَ</ثبات> شَيءٌ</مصراع>
      <مصراع>نَغَّصَ الْمَوْتُ ذَا الْغِنَى وَالْفَقِيْرَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٣٢">فَأَعَاْدَ الإِظْهَاْرَ</مقطع>
  <مقطع رقم="١٣٣">وَقَالَ الْجَعْدِيُّ</مقطع>
  <شاهدة مقطع="١٣٤" رقم="٤">
    <بيت>
      <مصراع>إِذَا الْوَحْشُ <ثبات>ضَمَّ الْوَحْشَ</ثبات> فِي ظُلُلَاْتِهَا</مصراع>
      <مصراع>سَوَاْقِطُ مِنْ حَرٍّ وَقَدْ كَاْنَ أَظْهَرَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٣٥">وَالرَّفْعُ الْوَجِهُ</مقطع>
  <مقطع رقم="١٣٦">وَقَالَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="١٣٧" رقم="٥">
    <بيت>
      <مصراع>لَعَمْرُكَ مَا مَعْنٌ بِتَاْرِكِ حَقِّهِ</مصراع>
      <مصراع>
      <ثبات>وَلَا مُنْسِيءٌ مَعْنٌ</ثبات> وَلَا مُتَيَسِّرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٣٨">وَإِذَا قُلْتَ <قول رقم="٣٥" ج="*">مَا زَيْدٌ مُنْطَلِقًا أَبُو عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="١٣٩">وَأَبُو عَمْرٍو أَبُوْهُ لَمْ يَجُزْ</مقطع>
  <مقطع رقم="١٤٠">لِأَنَّكَ لَمْ تُعَرِّفْهُ بِهِ وَلَمْ تَذْكُرْ لَهُ إِضْمَاْرًا وَلَا إِظْهَاْرًا فِيْهِ</مقطع>
  <مقطع رقم="١٤١">فَهَذَا لَا يَجُوْزُ لِأَنَّكَ لَمْ تَجْعَلْ لَهُ فِيْهِ سَبَبًا</مقطع>
  <مقطع رقم="١٤٢">وَتَقُولُ <قول رقم="٣٦">مَا أَبُو زَيْنَبَ ذَاْهِبًا وَلَا مُقِيْمَةٌ أُمُّهَا</قول>
  </مقطع>
  <مقطع رقم="١٤٣">تَرْفَعُ لِأَنَّكَ لَوْ قُلْتَ <قول رقم="٣٧" ج="*">مَا أَبُو زَيْنَبَ مُقِيْمَةً أُمُّهَا</قول> لَمْ يَجُزْ</مقطع>
  <مقطع رقم="١٤٤">لِأَنَّهَا لَيْسَتْ مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="١٤٥">وَإِنَّمَا عَمِلَتْ <حرف>مَا</حرف> فِيْهِ لَا فِي <حرف>زَيْنَبَ</حرف>
  </مقطع>
  <مقطع رقم="١٤٦">وَمِنَ ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ الْأَعْوَرُ الشَّنِّيّ</مقطع>
  <شاهدة مقطع="١٤٧" رقم="٦">
    <بيت>
      <مصراع>هَوِّنْ عَلَيْكَ فَإِنَّ الْأُمُوْرَ</مصراع>
      <مصراع>بِكَفِّ الْإِلٰهِ مَقَاْدِيْرُهَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>فَلَيْسَ بِآتِيْكَ مَنْهِيُّهَا</مصراع>
      <مصراع>وَلَا قَاْصِرٌ عَنْكَ مَأُمُوْرُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٤٨">لِأَنَّهُ جَعَلَ <حرف>الْمَأْمُوْرَ</حرف> مِنْ سَبَبِ الْأُمُوْرِ</مقطع>
  <مقطع رقم="١٤٩">وَلَمْ يَجْعَلْهُ مِنْ سَبَبٍ الْمُذَكَّرِ وَهُوَ <حرف>الْمَنْهِيّ</حرف>
  </مقطع>
  <مقطع رقم="١٥٠">وَقَدْ جَرَّهُ قَوْمٌ فَجَعَلُوْا <حرف>الْمَأْمُوْرَ</حرف> لِالْـ<حرف>مَنْهِيِّ</حرف>
  </مقطع>
  <مقطع رقم="١٥١">وَالْـ<حرف>مَنْهِيُّ</حرف> هُوَ الْأُمُوْرُ لِأَنَّهُ مِنْ الْأُمُوْرِ وَهُوَ بَعْضُهَا</مقطع>
  <مقطع رقم="١٥٢">فَأَجْرَاْهُ وَأَنَّثَهُ</مقطع>
  <مقطع رقم="١٥٣">كَمَا قَاْلَ جَرِيْرٌ</مقطع>
  <شاهدة مقطع="١٥٤" رقم="٧">
    <بيت>
      <مصراع>إِذَا بَعْضُ السِّنِيْنَ تَعَرَّقَتْنَا</مصراع>
      <مصراع>كَفَى الْأَيْتَاْمَ فَقْدَ أَبِي الْيَتِيْمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٥٥">وَمِثْلُ ذٰلِكَ قَوْلُ الشَّاْعِرِ النَّاْبِغَةِ الْجَعْدِيّ</مقطع>
  <شاهدة مقطع="١٥٦" رقم="٨">
    <بيت>
      <مصراع>فَلَيْسَ بِمَعْرُوْفٍ لَنَا أَنْ نَرُدَّهَا</مصراع>
      <مصراع>صِحَاْحًا <ثبات>وَلَا مُسْتَنْكَرٌ</ثبات> أَنْ تُعَقَّرَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٥٧">كَأَنَّهُ قَاْلَ <قول رقم="٣٨">لَيْسَ بِمَعْرُوْفٍ لَنَا رَدُّهَا صِحَاْحًا وَلَا مُسْتَنْكَرٌ عَقْرُهَا</قول>
  </مقطع>
  <مقطع رقم="١٥٨">وَالْـ<حرف>عَقْرُ</حرف> لَيْسَ للـ<حرف>رَّدِ</حرف>
  </مقطع>
  <مقطع رقم="١٥٩">وَقَدْ يَجُوْزُ أَنْ يَجُرَّ وَيَحْمِلَهُ عَلَى الـ<حرف>رَّدِّ</حرف> وَيُؤَنَّثَ لِأَنَّهُ مِنَ الْخَيْلِ</مقطع>
  <مقطع رقم="١٦٠">كَمَا قَاْلَ ذُوْ الرُّمَّةِ</مقطع>
  <شاهدة مقطع="١٦١" رقم="٩">
    <بيت>
      <مصراع>مَشَيْنَ كَمَا اهْتَزَّتْ رِمَاْحٌ تَسَفَّهَتْ</مصراع>
      <مصراع>أَعَاْلِيَهَا مَرُّ الرِّيَاْحِ النَّوَاْسِمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٦٢">كَأَنَّهُ قَاْلَ <حرف>تَسَفَّهَتْهَا الرِّيَاْحُ</حرف>
  </مقطع>
  <مقطع رقم="١٦٣">وَكَأَنَّهُ قَاْلَ <حرف>لَيْسَ بِآتِيَتِكِ مَنْهِيُّهَا وَلَيْسَ بِمَعْرُوْفَةٍ رَدُّهَا</حرف>
  </مقطع>
  <مقطع رقم="١٦٤">حِيْنَ كَاْنَ مِنْ الْخَيْلِ وَالْخَيْلُ مُؤَنَّثٌ فَأَنَّثَ</مقطع>
  <مقطع رقم="١٦٥">وَمِثْلُ هٰذَا قَوْلُهُ تَعَاْلَى جَدُّهُ</مقطع>
  <مقطع رقم="١٦٦">
    <آية سورة="٢" آية="١١٢">بَلَى مَنْ أَسْلَمَ وَجْهَهُ اللهُ وَهُوَ مُحْسِنٌ فَلَهُ أَجْرُهُ عِنْدَ رَبِّهِ وَلَا خَوْفٌ عَلَيْهِمْ وَلَا هُمْ يَحْزَنُوْنَ</آية>
  </مقطع>
  <مقطع رقم="١٦٧">أَجْرَى الْأَوَّلَ عَلَى لَفْظِ الْوَاْحِدِ وَالْآخِرَ عَلَى الْمَعْنَى</مقطع>
  <مقطع رقم="١٦٨">هٰذَا مِثْلُهُ فِي أَنَّهُ تُكُلِّمَ بِهِ مُذَكَّرًا ثُمَّ أُنِّثُ كَمَا جَمَعَ هٰهُنَا</مقطع>
  <مقطع رقم="١٦٩">وَهُوَ فِي قَوْلِهِ <قول رقم="٣٩">لَيْسَ بِآتِيَتِكِ مَنْهِيُّهَا</قول>
  </مقطع>
  <مقطع رقم="١٧٠">كَأَنَّهُ قَاْلَ <قول رقم="٤٠">لَيْسَ بِآتِيَتِكِ الأْمَوْرُ</قول>
  </مقطع>
  <مقطع رقم="١٧١">وَفِي <قول رقم="٤١">لَيْسَ بِمَعْرُوْفَةٍ رَدُّهَا</قول> كَأَنَّهُ قَاْلَ <قول رقم="٤٢">لَيْسَ بِمَعْرُوْفَةٍ خَيْلُنَا صِحَاْحًا</قول>
  </مقطع>
  <مقطع رقم="١٧٢">وَإِنَ شِئْتَ نَصَبْتَ فَقْلْتَ <قول رقم="٤٣">وَلَا مُسْتَنْكَرًا أَنْ تُعَقَّرَا وَلَا قَاْصِرًا عَنْكَ مَأْمُوْرُهَا</قول>
  </مقطع>
  <مقطع رقم="١٧٣">عَلَى قَوْلِكَ <قول رقم="٤٤">لَيْسَ زَيْدٌ ذَاْهِبًا وَلَا عَمْرٌو مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="١٧٤">أَوْ <حرف>وَلَا مُنْطَلِقًا عَمْرٌو</حرف>
  </مقطع>
  <مقطع رقم="١٧٥">وَتَقُوْلَ <قول رقم="٤٥">مَا كُلُّ سَوْدَاْءَ تَمْرَةً وَلَا بَيْضَاْءَ شَحْمَةٌ</قول>
  </مقطع>
  <مقطع رقم="١٧٦">وَإِنْ شِئْتَ نَصَبْتَ <حرف>شَحْمَةً</حرف>
  </مقطع>
  <مقطع رقم="١٧٧">وَ <حرف>بَيْضَاْءَ</حرف> فِي مَوْضِعِ جَرٍّ</مقطع>
  <مقطع رقم="١٧٨">كَأَنَّكَ أَظْهَرْتَ <حرف>كُلَّ</حرف>
  </مقطع>
  <مقطع رقم="١٧٩">فَقُلْتَ <قول رقم="٤٦">وَلَا كُلُّ بَيْضَاْءَ</قول>
  </مقطع>
  <مقطع رقم="١٨٠">قَاْلَ الشَّاْعِرُ أَبُو دُوَاْدَ</مقطع>
  <شاهدة مقطع="١٨١" رقم="١٠">
    <بيت>
      <مصراع>أَكُلَّ ٱمْرِئٍ تَحْسَبِيْنَ ٱمْرَأً</مصراع>
      <مصراع>
      <ثبات>وَنَاْرٍ</ثبات> تَوَقَّدَ بِاللَّيْلِ نَاْرَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٨٢">فَاسْتَغْنَيْتَ عَنْ تَثْنِيَةِ <حرف>كُلٍّ</حرف>
  </مقطع>
  <مقطع رقم="١٨٣">لِذِكْرِكَ إِيَّاْهُ فِي أَوَّلِ الْكَلَاْمِ وَلِقِلَّةِ الْتِبَاْسِهِ عَلَى الْمُخَاْطَبِ</مقطع>
  <مقطع رقم="١٨٤">وَجَاْزَ كَمَا جَاْزَ فِي قَوْلِكَ <قول رقم="٤٧">مَا مِثْلُ عَبْدِ اللهِ يَقُوْلُ ذَاْكَ وَلَا أَخِيْهِ</قول>
  </مقطع>
  <مقطع رقم="١٨٥">وَإِنْ شِئْتَ قُلْتَ <حرف>وَلَا مِثْلُ أَخِيْهِ</حرف>
  </مقطع>
  <مقطع رقم="١٨٦">فَكَمَا جَاْزَ فِي جَمْعِ الْخَبَرِ كَذٰلِكَ يَجُوْزُ فِي تَفْريْقِهِ</مقطع>
  <مقطع رقم="١٨٧">وَتَفْرِيْقُهُ أَنْ تَقُوْلَ <قول رقم="٤٨">مَا مِثْلُ عَبْدِ اللهِ يَقُوْلُ ذَاْكَ وَلَا أَخِيْهِ يَكْرَهُ ذَاكَ</قول>
  </مقطع>
  <مقطع رقم="١٨٨">وَمِثْلُ ذٰلِكَ <قول رقم="٤٩">مَا مِثْلُ أَخِيْكَ وَلَا أَبِيْكَ يَقُوْلاْنِ ذَاْكَ</قول>
  </مقطع>
  <مقطع رقم="١٨٩">فَلَمَّا جَاْزَ فِي هٰذَا جَاْزَ فِي ذٰلِكَ</مقطع>
