<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٦١"
     درنبورج="١-٤٩"
     البكاء="١-١٩١"
     هارون="١-١١٨"
     يعقوب="١-١٧٥"
     رقم="٣١">

  <عنوان>
    <مقطع هوية='٧١٦١٣'>هٰذَا بَابُ الْأَفْعَالِ الَّتِي تُسْتَعْمَلُ وَتُلْغَى</مقطع>
  </عنوان>
  <مقطع هوية='١٥٩١١'>فَهِيَ  <حرف>ظَنَنْتُ</حرف> وَ<حرف>حَسِبْتُ</حرف> وَ<حرف>خِلْتُ</حرف> وَ<حرف>أُرَيْتُ</حرف> وَ<حرف>رَأَيْتُ</حرف> وَ<حرف>زَعَمْتُ</حرف>
  </مقطع>
  <مقطع هوية='٩٣٧٤٣'>وَمَا يَتَصَرَّفُ مِنْ أَفْعَالِهِنَّ</مقطع>
  
  <مقطع هوية='٤٦٤١٨'>فَإِذَا جَاءَتْ مُسْتَعْمَلَةً</مقطع>
  <مقطع هوية='١٥٤٤٧'>فَهِيَ بِمَنْزِلَةِ  <حرف>رَأَيْتُ</حرف> وَ<حرف>ضَرَبْتُ</حرف> وَ<حرف>أَعْطَيْتُ</حرف>
  </مقطع>
  <مقطع هوية='٣٥٥٧٩'>في الْإِعْمَالِ وَالبِنَاءِ عَلَى الْأَوَّلِ في الْخَبَرِ وَالِاسْتِفْهَامِ وَفِي كُلِّ شَيْءٍ</مقطع>
  <مقطع هوية='٢٦٩٦٨'>وَذٰلِكَ قَوْلُكَ  <قول هوية='٩٤٤٥١'>أَظُنُّ زَيْدًا مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='٦٤٨٨٤'>وَ<قول هوية='٦٧١٦٠'>أَظُنُّ عَمْرًا ذَاْهِبًا</قول>
  </مقطع>
  <مقطع هوية='٥١٢٢٤'>وَ<قول هوية='٥٠٤٦٢'>زَيْدًا أَظُنُّ أَخَاْكَ</قول>
  </مقطع>
  <مقطع هوية='١٣٥٤٥'>وَ<قول هوية='٩٣٧٢٢'>عَمْرًا زَعَمْتُ أَبَاْكَ</قول>
  </مقطع>
  <مقطع هوية='١٢٦٢٣'>وَتَقُوْلُ  <قول هوية='٢٦٨٠٧'>زَيْدٌ أَظُنُّهُ ذَاْهِبًا</قول>
  </مقطع>
  <مقطع هوية='٥٩٣٥٠'>وَمَنْ قَالَ  <قول هوية='٩٧٤٧١'>عَبْدُ اللّٰهِ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٧٥٧٩٦'>نَصَبَ فَقَالَ  <قول هوية='٠٩٥٣٦'>عَبْدَ اللّٰهِ أَظُنُّهُ ذَاْهِبًا</قول>
  </مقطع>
  <مقطع هوية='٠٣٥٥٣'>وَتَقُوْلُ  <قول هوية='٨٠٢٤٥'>أَظُنُّ عَمْرًا مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='١٦١٣٦'>وَ<قول هوية='٥٢٣٦٧'>بَكْرًا أَظُنُّهُ خَاْرِجًا</قول>
  </مقطع>
  <مقطع هوية='٣٤٣٦٨'>كَمَا قُلْتَ  <قول هوية='٠٤٠٨٠'>ضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٢٥٧٧٠'>وَ<قول هوية='٧٩٦٨١'>عَمْرًا كَلَّمْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٥٣٥٨٤'>وَإِنْ شِئْتَ رَفَعْتَ عَلَى الرَّفْعِ في هٰذَا</مقطع>
  <مقطع هوية='٨٢٩٦٨'>فَإِنْ أَلْغَيْتَ قُلْتُ <قول هوية='٩٠٩٩٨'>عَبْدُ اللّٰهِ أَظُنُّ ذَاْهِبٌ</قول></مقطع>
  <مقطع هوية='٥٣٥٠٥'>وَ<قول هوية='٢٧٢٣٠'>هٰذَا إِخَالُ أَخُوْكُ</قول>
  </مقطع>
  <مقطع هوية='٩٠٧٨٠'>وَ<قول هوية='٤٥٦٦٥'>فِيهَا أُرَى أَبُوْكَ</قول>
  </مقطع>
  <مقطع هوية='٦٥٨٠٣'>وَكُلَّمَا أَرَدْتَ الْإِلْغَاءَ فَالتَّأْخِيْرُ أَقْوَى</مقطع>
  <مقطع هوية='٩٧٠٨٥'>وَكُلٌّ عَرَبِىٌّ جَيدٌ</مقطع>
  <مقطع هوية='٦٩٩٤٥'>وَقَالَ اللَّعِيْنُ يَهْجُو الْعَجَّاجَ</مقطع>
  
  <شاهدة هوية='٩٩٧٩٤'>
    <بيت>
      <مصراع>أَبِالْأَرَاْجِيْزِ يَا ابْنَ اللُّؤْمِ تُوْعِدُنِي</مصراع>
      <مصراع>وَفِي الْأَرَاْجِيْزِ خِلْتُ اللُّؤْمُ وَالْخَوَرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٢٧٦٤'>أَنْشَدَنَاْهُ يُوْنُسُ مَرْفُوْعًا عَنْهُمْ</مقطع>
  <مقطع هوية='٢٧٦٦٠'>وَإِنَّمَا كَانَ التَّأْخِيْرُ أَقْوَى</مقطع>
  <مقطع هوية='٥٣٨٤٢'>لِأَنَّهُ إِنَّمَا يَجِيءُ بِالشَّكِّ بَعْدَمَا يَمْضِي كَلامُهُ عَلَى الْيَقِيْنِ</مقطع>
  <مقطع هوية='٥٤٥٢١'>أَوْ بَعْدَ مَا يَبْتَدِءُ وَهُوَ يُرِيْدُ الْيَقِيْنَ ثُمَّ يُدْرِكُهُ الشَّكُّ</مقطع>
  <مقطع هوية='٧٩٢٢٤'>كَمَا تَقُوْلُ <قول هوية='٥١٤١٥'>عَبْدُ اللّٰهِ صَاْحِبُ ذَاكَ بَلَغَنِي</قول></مقطع>
  <مقطع هوية='٤٨٩٧٨'>وَكَمَا قَالَ مَنْ يَقُوْلُ <قول هوية='٨٤٧٠٦'>ذَاكَ تَدْرِي</قول></مقطع>
  <مقطع هوية='٤٨١٨٩'>فَأَخَّرَ مَا لَمْ يَعْمَلْ في أَوَّلِ كَلَامِهِ</مقطع>
  <مقطع هوية='٣٣٥١٩'>وَإِنَّمَا جَعَلَ ذٰلِكَ فِيمَا بَلَغَهُ</مقطع>
  <مقطع هوية='٥٤٢١٠'>بَعْدَ مَا مَضَى كَلامُهُ</مقطع>
  <مقطع هوية='٩٧٥٥٩'>عَلَى الْيَقِيْنِ وَفِيمَا يَدْرِى</مقطع>
  <مقطع هوية='٣٤٢٩٧'>فَإِذَا ابْتَدَأَ كَلامَهُ عَلَى مَا في نِيَّتِهِ مِنَ الشَّكِّ</مقطع>
  <مقطع هوية='٧٤٨٠١'>أَعْمَلَ الْفِعْلَ قَدَّمَ أَوْ أَخَّرَ</مقطع>
  <مقطع هوية='٥٢٦٥٠'>كَمَا قَالَ  <قول هوية='٦٠٦٦٣'>زَيْدًا رَأَيْتُ</قول></مقطع>
  <مقطع هوية='٠٦٥٤٠'>وَ<قول هوية='٩٨٩٤١'>رَأَيْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٥٠٧١٢'>وَكُلَّمَا طَالَ الْكَلَامُ</مقطع>
  <مقطع هوية='٤٣٠٨٩'>ضَعُفَ التَّأْخِيْرُ</مقطع>
  <مقطع هوية='٢٥٩٨٠'>إِذَا أَعْمَلْتَ</مقطع>
  <مقطع هوية='٨٧٠٠٦'>وَذٰلِكَ قَوْلُكَ  <قول هوية='٠٠٩١٢'>زَيْدًا أَخَاكَ أَظُنُّ</قول>
  </مقطع>
  <مقطع هوية='٤٩٨٣٣'>فَهٰذَا ضَعِيْفٌ</مقطع>
  <مقطع هوية='٢٨١١٣'>كَمَا يَضْعُفُ</مقطع>
  <مقطع هوية='٨٨١٧٧'>
    <قول هوية='٠٥٥٩٩'>زَيْدًا قَائِمًا ضَرَبْتُ</قول>
  </مقطع>
  <مقطع هوية='٨٣٤٠٧'>لِأَنَّ الْحَدَّ</مقطع>
  <مقطع هوية='٩٩١٥٤'>أَنْ يَكُوْنَ الْفِعْلُ مُبْتَدَأً</مقطع>
  <مقطع هوية='١٤٨٨٣'>إِذَا عَمِلَ</مقطع>
  
  <مقطع هوية='٧٦٧٠٦'>وَمِمَّا جَاءَ في الشِّعْرِ مُعْمَلًا</مقطع>
  <مقطع هوية='٠٥٣٦٥'>في  <حرف>زَعَمْتُ</حرف>
  </مقطع>
  <مقطع هوية='٦١٢٤٣'>قَوْلُ أَبِىْ ذُؤَيْبٍ</مقطع>
  <شاهدة هوية='٩٨٤٣١'>
    <بيت>
      <مصراع>فَإِنْ تَزْعُمِينِي كُنْتُ أَجْهَلُ فِيكُمُ</مصراع>
      <مصراع>فَإِنَّى شَرَيْتُ الْحِلَمِ بُعْدِكِ بِالْجَهْلِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٧١٩١'>وَقَالَ النَّابِغَةُ الْجَعْدِىّ</مقطع>
  <شاهدة هوية='٤٩٩٢٠'>
    <بيت>
      <مصراع>عَدَدْتَ قُشِيْرا إِذْ عَدَدْتَ فَلَمْ أُسَأْ</مصراع>
      <مصراع>بِذَاكَ وَلَمْ أزَعَمكِ عَنْ ذَاكَ مَعْزِلِا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٠٢٣١'>وَتَقُوْلُ  <قول هوية='٤٦٣٦٨'>أَيْنَ تُرَىْ عَبْدَ اللّٰهُ قَائِمًا</قول>
  </مقطع>
  <مقطع هوية='٧٦٤٥٩'>وَ<قول هوية='٠٥٨٣٥'>هَلْ تُرَى زَيْدًا ذَاهِبًا</قول>
  </مقطع>
  <مقطع هوية='٢٠٤٣٥'>لِأَنَّ  <حرف>هَلْ</حرف> وَ<حرف>أَيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٢٤٥٥٣'>كَأَنَّكَ لَمْ تَذْكُرْهُمَا</مقطع>
  <مقطع هوية='٦٦٦٦٣'>لِأَنَّ مَا بَعْدَهُمَا ابْتِدَاءٌ</مقطع>
  <مقطع هوية='٣٥٤٨٥'>كَأَنَّكَ قُلْتَ</مقطع>
  <مقطع هوية='٥٨٩٦٤'>
    <قول هوية='٦٥٦٩٥'>أَتُرَى زَيْدًا ذَاهِبًا</قول>
  </مقطع>
  <مقطع هوية='٢٥٦٦٠'>وَ<قول هوية='٠٦٢٩٨'>أَتَظُنُّ عَمْرًا مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='٨١٧٣٠'>فَإِنَّ قُلْتَ  <حرف>أَيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٢١٣٧٦'>وَأَنْتَ تُرِيْدُ أَنْ تَجْعَلَهًا</مقطع>
  <مقطع هوية='٩٧٣٢٨'>بِمَنْزِلَةِ  <حرف>فِيهًا</حرف>
  </مقطع>
  <مقطع هوية='٥٤٨٢٠'>إِذَا اسْتَغْنَى بِهَا الِابْتِدَاءُ</مقطع>
  <مقطع هوية='٧٧٣٥٣'>قُلْتَ  <قول هوية='١٠٢١٦'>أَيْنَ تُرَى زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٤٤٥٦٥'>وَ<قول هوية='٥٠٣١٧'>أَيْنَ تُرَىْ زَيْدًا</قول>
  </مقطع>
  
  <مقطع هوية='٤٩٢٥٨'>وَاعْلَمْ أَنَّ  <حرف>قُلْتُ</حرف> إِنَّمَا وَقَعَتْ في كَلَامِ الْعَرَبِ عَلَى أَنْ يُحْكَى بِهًا</مقطع>
  <مقطع هوية='٧١٦٧٧'>وَإِنَّمَا تَحْكِي بَعْدَ الْقَوْلِ مَا كَانَ كَلَامًا لَا قَوْلًا</مقطع>
  <مقطع هوية='٦١٦٨٤'>نَحْوَ<قول هوية='١٣٤١٧'>قُلْتُ زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='١٧٥٤٧'>لِأَنَّهُ يَحْسُنُ أَنْ تَقُوْلَ  <قول هوية='٢٠٨٩٣'>زَيْدٌ مُنْطَلِقٌ</قول> وَلَا تَدْخُلْ قُلْتُ</مقطع>
  <مقطع هوية='٧٠٩٦٥'>وَمَا لَمْ يَكُنْ هَكَذَا أَسْقَطَ الْقَوْلُ عَنْهُ</مقطع>
  <مقطع هوية='٢٤٩٣٢'>وَتَقُوْلُ  <قول هوية='١٧١٤٥'>قَالَ زَيْدٌ [إِنَّ عَمْرا]عَمْرٌو خَيْرُ الْنَّاسِ</قول>
  </مقطع>
  <مقطع هوية='٠٦٨١٢'>وَتَصْدِيْقُ ذٰلِكَ قَوْلُهُ جَلَّ ثَنَاؤُهُ  <آية هوية='٤٣١٧٧'>وَإِذْ قَالَتِ الْمَلَائِكَةُ يَا مَرْيَمُ إِنَّ الْلَّهَ [اصْطَفَاكِ] يُبَشِّرُكِ</آية> وَلَوْلَا ذٰلِكَ لَقَالَ  <حرف>أَنَّ الْلَّهَ</حرف>
  </مقطع>
  <مقطع هوية='٢٥٣٨٠'>وَكَذٰلِكَ جَمِيْعُ مَا تَصَرَّفَ مِنْ فِعْلِهِ إِلَّا  <حرف>تَقُوْلُ</حرف> في الِاسْتِفْهَامِ</مقطع>
  <مقطع هوية='١٨٢٤٦'>شَبَّهُوْهَا بَـ<حرف>تَظُنُّ</حرف> وَلَمْ يَجْعَلُوْهَا كـ<حرف>يَظُنُّ</حرف> وَ<حرف>أَظُنُّ</حرف> فِي الْاسْتِفْهَامِ</مقطع>
  <مقطع هوية='٩٢٨٣٠'>لِأَنَّهُ لَا يَكَادُ يُسْتَفْهَمُ الْمُخَاطَبُ عَنْ ظَنِّ غَيْرِهِ وَلَا يُسْتَفَهَمُ هُوَ إِلِّا عَنْ ظَنِّهُ</مقطع>
  <مقطع هوية='٨١٤٥٣'>فَإِنَّمَا جُعِلَتْ كَـ<حرف>تَظُنُّ</حرف> كَمَا أَنَّ  <حرف>مًا</حرف> كَ  <حرف>لَيْسَ</حرف> في لُغَةِ أَهْلِ الْحِجَازِ مَا دَامَتِ في مَعَنَاهًا</مقطع>
  <مقطع هوية='٦٦٨٨٣'>وَإِذَا تَغَيَّرَتْ عَنْ ذٰلِكَ أَوْ قُدِّمَ الْخَبَرُ رَجَعَتْ إِلَى الْقِيَاسِ</مقطع>
  <مقطع هوية='٠١٢٩٥'>وَصَارَتْ اللُّغَاتُ فِيهَا كَلُغَةِ تَمِيْمٍ</مقطع>
  <مقطع هوية='٨٧٢٠٩'>وَلَمْ تُجْعَلْ  <حرف>قُلْتُ</حرف> كِـ<حرف>ظَنَنْتُ</حرف>
  </مقطع>
  <مقطع هوية='٧٦١٥٤'>لِأَنَّهَا إِنَّمَا أَصْلُهَا عِنْدَهُمْ أَنْ يَكُوْنَ مَا بَعْدَهَا مَحْكِيًّا</مقطع>
  <مقطع هوية='٢١١٠٦'>فَلَمْ تُدْخَلْ في بَابِ  <حرف>ظَنَنْتُ</حرف> بِأَكْثَرَ مِنْ هٰذًا</مقطع>
  <مقطع هوية='٩٢١٨٦'>كَمَا أَنَّ  <حرف>مًا</حرف> لَمْ تَقْوَ قُوَّةَ 
  <حرف>لَيْسَ</حرف> وَلَمْ تَقَعْ في كُلِّ مَوَاضِعِهًا</مقطع>
  <مقطع هوية='٥٨٦٥٧'>لِأَنَّ أَصْلَهَا عِنْدَهُمْ أَنْ يَكُوْنَ مَا بَعْدَهَا مُبْتَدَأٌ</مقطع>
  <مقطع هوية='٣٦٩٢٢'>وَسَأُفَسِّرُ لَكَ إِنْ شَاءَ اللّٰهُ مَا يَكُوْنُ بِمَنْزِلَةِ الْحَرْفِ في شَيْءٍ ثُمَّ لَا يَكُوْنُ مَعَهُ عَلَى أَكْثَرِ أَحْوَالِهِ</مقطع>
  <مقطع هوية='٠٩٩٧١'>وَقَدْ بُيِّنَ بَعْضُهُ فِيمَا مَضَىْ</مقطع>
  <مقطع هوية='٥٤٠٢٨'>وَذٰلِكَ قَوْلُكَ  <قول هوية='٩٩٠٩١'>مَتَىْ تَقُوْلُ زَيْدًا مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='٠١١٤٥'>وَ<قول هوية='٤٦٣٧٨'>أَتَقُوْلُ عَمْرًا ذَاهِبًا</قول>
  </مقطع>
  <مقطع هوية='٥٨١٩٧'>وَ<قول هوية='٠٠٥٩٧'>أَكُلَّ يَوْمٍ تَقُوْلُ عَمْرًا مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع هوية='٩٥٧٧٣'>لَا يُفْصَلُ بِهَا كَمَا لَمْ يُفْصَلْ بِهَا في  <قول هوية='٩٧٠٠٩'>أَكُلَّ يَوْمٍ زَيْدًا تَضْرِبُهُ</قول>
  </مقطع>
  <مقطع هوية='٩٨٢١٠'>فَإِنْ قُلْتَ  <قول هوية='٧٨٧٤١'>أَأَنْتَ تَقُوْلُ زَيْدٌ مُنْطَلِقٌ</قول> رَفَعْتَ</مقطع>
  <مقطع هوية='٥٥٣١١'>لِأَنَّهُ فُصِلَ بَيْنَهُ وَبَيْنَ حَرْفِ الاسْتِفْهَامِ</مقطع>
  <مقطع هوية='٥٧٣٤١'>كَمَا فُصِلَ في قَوْلِكَ  <قول هوية='٥٢٥٥٦'>أَأَنْتَ زَيْدٌ مَرَرْتَ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٢٥٩٣٨'>فَصَارَتْ بِمَنْزِلَةِ أَخَوَاتِهَا وَصَارَتْ عَلَى الْأَصْلِ</مقطع>
  <مقطع هوية='٣٤٣٤٠'>قَالَ الْكُمَيْتُ</مقطع>
  <شاهدة هوية='٣٣٢٨٣'>
    <بيت>
      <مصراع>أَجُهَّالًا تَقُوْلُ بَنِيْ لُؤَيٍّ</مصراع>
      <مصراع>لَعَمْرُ أَبِيْكَ أَمْ مُتَجَاهِلِيْنًا</مصراع>
    </بيت>
  </شاهدة>
  
  <مقطع هوية='٠٣١٤٣'>وَقَالَ عُمَرُ بِنُ أَبِيْ رَبِيْعَةَ</مقطع>
  <شاهدة هوية='٥٩١٢٣'>
    <بيت>
      <مصراع>أَمَّا الرَّحِيْلُ فَدُوْنَ بَعْدِ غَدٍ</مصراع>
      <مصراع>فَمَتَىْ تَقُوْلُ الدَّارَ تَجْمَعُنًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٣٥٧٢'>وَإِنْ شِئْتَ رَفَعْتَ بِمَا نَصَبْتَ فَجَعَلْتَهُ حِكَايَةً</مقطع>
  <مقطع هوية='٠٠٣٣٠'>وَزَعَمَ أَبُوْ الْخَطَّابِ وَسَأَلْتُهُ عَنْهُ غَيْرَ مَرَّةٍ أَنَّ نَاسًا مِنَ العَرَبِ يُوْثَقُ بِعَرَبِيَّتِهِمْ وَهُمْ بَنُوْ سُلَيْمٍ يَجْعَلُوْنَ بَابَ  <حرف>قُلْتُ</حرف> أَجْمَعَ مِثْلَ  <حرف>ظَنَنْتُ</حرف>
  </مقطع>
  <مقطع هوية='٠٦٣٩٧'>وَاعْلَمْ أَنَّ الْمَصْدَرَ قَدْ يُلْغَىْ كَمَا يُلْغَىْ الْفِعْلُ</مقطع>
  <مقطع هوية='٠٣١٢٥'>وَذٰلِكَ قَوْلُكَ َ  <قول هوية='١٧٢٠٢'>مَتَىْ زَيْدٌ ظَنُّكَ ذَاهَبٌ</قول>
  </مقطع>
  <مقطع هوية='٤٦٦٩٥'>وَ<قول هوية='٧٦١٢٢'>زَيْدٌ ظَنِّيْ أَخُوْكَ</قول>
  </مقطع>
  <مقطع هوية='٠٥٨٦٠'>وَ<قول هوية='٦٩٤٨٢'>زَيْدٌ ذَاهِبٌ ظَنِّي</قول></مقطع>
  <مقطع هوية='٢٩٠٠٨'>فَإِنْ ابْتَدَأْتَ فَقُلْتَ  <قول هوية='٤٠٤٤٢'>ظَنِّيَ زَيْدٌ ذَاهِبٌ</قول></مقطع>
  <مقطع هوية='٤٧٠١٠'>كَانَ ضَعِيْفًا [قَبِيْحًا] لَا يَجُوْزُ الْبَتَّةَ</مقطع>
  <مقطع هوية='٢٥٩٥٧'>كَمَا ضَعُفَ  <قول هوية='٠٩٣٥٨'>أَظُنُّ زَيْدٌ ذَاهِبٌ</قول>
  </مقطع>
  <مقطع هوية='٥٤١٩٥'>وَهُوَ في  <حرف>مَتَىْ</حرف> وَ<حرف>أَيْنَ</حرف> أَحْسَنُ</مقطع>
  <مقطع هوية='٣٠٢٣٩'>إِذَا قُلْتَ  <قول هوية='٣٨٩٨٢'>مَتَىْ ظَنُّكَ زَيْدٌ ذَاهِبٌ</قول>
  </مقطع>
  <مقطع هوية='٠٤٢٣٥'>وَ<قول هوية='٩٥٦٦٨'>مَتَىْ تَظُنُّ عَمْرٌو مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٠٧٥٩٢'>لِأَنَّ قَبْلَهُ كَلَامًا</مقطع>
  <مقطع هوية='٨٥٧٢٢'>وَإِنَّمَا ضَعُفَ هٰذَا في الِابْتِدَاءِ</مقطع>
  <مقطع هوية='٣٩٣٢٥'>كَمَا يَضْعُفُ  <قول هوية='١٠٣٧٩'>غَيْرَ شَكٍّ زَيْدٌ ذَاهِبٌ</قول>
  </مقطع>
  <مقطع هوية='٦٣٧٢٩'>وَ<قول هوية='٣٧١٤١'>حَقًّا عَمْرٌو مُنْطَلِقٌ</قول>
  </مقطع>
  
  <مقطع هوية='٦٩٤٩٥'>وَإِنْ شِئْتَ قُلْتَ  <قول هوية='٩١٢٤٥'>مَتَىْ ظَنُّكَ زَيْدًا أَمِيْرًا</قول>
  </مقطع>
  <مقطع هوية='٨٠٦٩٥'>كَقَوْلِكَ  <قول هوية='٣٦٢١٩'>مَتَىْ ضَرْبُكَ عَمْرًا</قول>
  </مقطع>
  <مقطع هوية='٨١٣٢٦'>وَقَدْ يَجُوْزُ أَنْ تَقُوْلَ  <قول هوية='٧٩٣٢١'>عَبْدُ اللّٰهِ أَظُنُّهُ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٢٠٠٩٩'>تَجْعَلُ هَذِهِ الْهَاءَ عَلَى ذَاكَ</مقطع>
  <مقطع هوية='٣٧١٣٧'>كَأَنَّكَ قُلْتَ  <قول هوية='٩٤٨٠٥'>زَيْدٌ مُنْطَلِقٌ أَظُنُّ ذَاكَ</قول>
  </مقطع>
  <مقطع هوية='٨٥٨٤٨'>لَا تَجْعَلُ الْهَاءَ لِعَبْدِ اللّٰهِ</مقطع>
  <مقطع هوية='٢٢٤١٥'>وَلَكِنَّكَ تَجْعَلُهَا ذَاكَ الْمَصْدَرَ</مقطع>
  <مقطع هوية='٥١٥٤٧'>كَأَنَّهُ قَالَ  <قول هوية='٥٣٠٢٥'>أَظُنُّ ذَاكَ الظَّنَّ</قول>
  </مقطع>
  <مقطع هوية='٣٥٩٣٢'>أَوْ  <قول هوية='٨٩٨٤٨'>أَظُنُّ ظَنِّي</قول>
  </مقطع>
  <مقطع هوية='٨٦٤٣٠'>فَإِنَّمَا يَضْعُفُ هٰذَا إِذَا أَلْغَيْتَ</مقطع>
  <مقطع هوية='٠١١٩٧'>لِأَنَّ الظَّنَّ يُلْغَىْ في مَوَاضِعِ <حرف>أَظُنُّ</حرف></مقطع>
  <مقطع هوية='٠٧٨٢٥'>حَتَّى يَكُوْنَ بَدَلًا مِنَ اللَّفْظِ بِهِ</مقطع>
  <مقطع هوية='٥٩٣٩٢'>فَكُرِهَ إِظْهَارُ الْمَصْدَرِ هٰهُنَا كَمَا قَبُحَ أَنْ يُظْهَرَ مَا انْتَصَبْ عَلَيْهِ  <حرف>سَقْيًا</حرف></مقطع>
  <مقطع هوية='٩٥٧٨١'>وَسَتَرَىْ ذٰلِكَ إِنْ شَاءَ اللّٰهُ مُبَيَّنًا</مقطع>
  <مقطع هوية='١٢٠٠٥'>وَلَفْظُكَ بِـ<حرف>ذَاكَ</حرف> أَحْسَنُ مِنَ لَفْظِكَ بِـ<حرف>ظَنِّي</حرف></مقطع>
  <مقطع هوية='٦٣٢٨٢'>فَإِذَا قُلْتَ  <قول هوية='٤٨٥٣٤'>زَيْدٌ أَظُنُّ ذَاكَ عَاقِلٌ</قول></مقطع>
  <مقطع هوية='٠٧٥٧٢'>كَانَ أَحْسَنَ مِنْ قَوْلِكَ  <قول هوية='٢٤٧٥٣'>زَيْدٌ أَظُنُّ ظَنِّىي عَاْقِلٌ</قول></مقطع>
  <مقطع هوية='٤٧٣٠٩'><حرف>ذَاكَ</حرف> أَحْسَنُ لِأَنَّهُ لَيْسَ بِمَصْدَرٍ وَهُوَ اسْمٌ مُبْهَمٌ يَقَعُ عَلَى كُلِّ شَئٍ</مقطع>
  <مقطع هوية='٠٥٥٧٤'>أَلَا تَرَىْ أَنَّكَ لَوْ قُلْتَ  <قول هوية='١٣١٠٦'>زَيْدٌ ظَنِّي مُنْطَلِقٌ</قول></مقطع>
  <مقطع هوية='٠٧٦٣١'>لَمْ يَحْسُنْ وَلَمْ يَجُزْ أَنْ تَضَعَ ذَاكَ مَوْضِعِ ظَنِّي</مقطع>
  <مقطع هوية='٨١٤٢٨'>وَتَرْكُ <حرف>ذَاكَ</حرف> في <حرف>أَظُنُّ</حرف> إِذَا كَانَ لَغْوًا أَقْوَى مِنْهُ إِذَا وَقَعَ عَلَى الْمَصْدَرِ</مقطع>
  <مقطع هوية='٥٤٢٠١'>لِأَنَّ  <حرف>ذَاكَ</حرف> إِذَا كَانَ مَصْدَرًا فَإِنَّكَ لَا تَجِيءُ بِهِ</مقطع>
  <مقطع هوية='٨٥٢٨٥'>لِأَنَّ الْمَصْدَرَ يَقْبُحُ أَنْ تَجِيءَ بِهِ هٰهُنَا</مقطع>
  <مقطع هوية='٨٦١٦١'>فَإِذَا قَبُحَ الْمَصْدَرُ فَمَجِيئُكَ بِـ<حرف>ذَاكَ</حرف> أَقْبَحُ لِأَنَّهُ مَصْدَرٌ</مقطع>
  <مقطع هوية='٩٥٩٦٧'>وَإِذَا أَلْغَيْتَ فَقُلْتَ  <قول هوية='٦٦٧٥١'>عَبْدُ اللّٰهِ أَظُنُّ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٥٣٦٠٥'>فَهٰذَا أَجْمَلُ مِنْ قَوْلِكَ  <قول هوية='٨٤٩٠٩'>أَظُنُّهُ</قول>
  </مقطع>
  <مقطع هوية='٣١٣٣٩'>وَ<حرف>أَظُنُّ</حرف> بِغَيْرِ هَاءٍ أَحْسَنُ لِئَلَّا يَلْتَبِسَ بِالِاسْمِ وَلِيَكُوْنَ أَبْيَنَ في أَنَّهُ لَيْسَ يَعْمَلُ</مقطع>
  <مقطع هوية='٨٤٧٩٢'>فَأَمَّا  <قول هوية='٠٤١١٣'>ظَنَنْتُ أَنَّهُ مُنْطَلِقٌ</قول> فَاسْتُغْنِيَ بِخَبَرِ  <حرف>أَنَّ</حرف>
  </مقطع>
  <مقطع هوية='٠٠٠٩٩'>تَقُوْلُ  <قول هوية='٨٠٩٧٠'>أَظُنُّ أَنَّهُ فَاعِلٌ كَذَا وَكَذًا</قول> تُفَسِّرُ [فَتَسْتَغْنِي]</مقطع>
  <مقطع هوية='٠٩٨٩٩'>وَإِنَّمَا يُقْتَصَرُ عَلَى هٰذَا إِذَا عُلِمَ أَنَّهُ مُسْتغْنٍ بِخَبَرِ  <حرف>أَنَّ</حرف>
  </مقطع>
  <مقطع هوية='٥٩٧٤٣'>وَقَدْ يَجُوْزُ أَنْ تَقُوْلَ  <قول هوية='٣٩٩٨٧'>ظَنَنْتُ زَيْدًا</قول> إِذَا قَالَ  <قول هوية='٦١٢٥٦'>مَنْ تَظُنُّ</قول>
  </مقطع>
  <مقطع هوية='٢١٤٤٢'>أَيْ  <قول هوية='٣١٥٤٥'>مَنْ تَتَّهِمُ</قول>
  </مقطع>
  <مقطع هوية='٠٦٤٠٧'>فَتَقُوْلُ  <قول هوية='٧٦٨٣١'>ظَنَنْتُ زَيْدًا</قول> كَأَنَّهُ قَالَ  <قول هوية='٦٦٦٨٣'>اتَّهَمْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٢٩١٩٤'>وَعَلَىَ هٰذَا قِيَلَ  <حرف>ظَنِيْنٌ</حرف> أَىْ  <حرف>مُتَّهِمٌ</حرف>
  </مقطع>
  <مقطع هوية='٢٧٤٩٦'>وَلَمْ يَجْعَلُوْا ذَاكَ في <حرف>حَسِبْتُ</حرف> وَ<حرف>خِلْتُ</حرف> وَ<حرف>أُرَى</حرف>
  </مقطع>
  <مقطع هوية='٠١٥٨٨'>لِأَنَّ مِنْ كَلَامِهِمْ أَنْ يُدْخِلُوْا الْمَعْنَى في الشَيءِ لَا يَدْخُلُ في مِثْلِهِ</مقطع>
  <مقطع هوية='٤٥٧٤٤'>وَسَأَلْتُهُ عَنْ  <حرف>أَيُّهُمْ</حرف> لِمَ لَمْ يَقُوْلُوْا  <قول هوية='٧٢٠٣٤'>أَيَّهُمْ مَرَّرْتَ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٣٢٦٤٩'>فَقَالَ لَأَنْ  <حرف>أَيَّهُمْ</حرف> هُوَ حَرْفُ الِاسْتِفْهَامِ</مقطع>
  <مقطع هوية='١٣٩٨٦'>لَا تَدْخُلُ عَلَيْهِ الْأَلِفُ</مقطع>
  <مقطع هوية='٢٧٢٩٨'>وَإِنَّمَا تُرِكَتْ الْأَلِفُ اسْتِغْنَاءً</مقطع>
  <مقطع هوية='٩١٦٤٣'>فَصَارَتْ بِمَنْزِلَةِ الِابْتِدَاءِ</مقطع>
  <مقطع هوية='٥٧٧٦٦'>أَلَا تَرَىْ أَنَّ حَدَّ الْكَلَامِ أَنْ تُؤَخِّرَ الْفِعْلَ فَتَقُوْلَ  <قول هوية='٦٤٥٩٧'>أَيَّهُمْ رَأَيْتَ</قول>
  </مقطع>
  <مقطع هوية='٦٩٦٨٨'>كَمَا تَفْعَلُ ذٰلِكَ بِالْأَلِفِ فَهِيَ نَفْسُهَا بِمَنْزِلَةِ الِابْتِدَاءِ</مقطع>
  <مقطع هوية='٥٤١٦٦'>وَإِنْ قُلْتَ  <قول هوية='٢٥٧٥٢'>أَيَّهُمُ زَيْدًا ضَرَبَ</قول></مقطع>
  <مقطع هوية='٦٩٤٦٨'>قَبُحَ كَمَا يَقْبُحُ في <حرف>مَتَى</حرف> وَنَحْوِهَا</مقطع>
  <مقطع هوية='٥٠٠٠٠'>وَصَارَ أَنْ يَلِيهَا الْفِعْلَ هُوَ الْأَصْلُ</مقطع>
  <مقطع هوية='٣٥٦٧٣'>لِأَنَّهَا مِنْ حُرُوْفِ الاسْتِفْهَامِ وَلَا يُحَتَاجُ إِلَى الْأَلِفِ</مقطع>
  
  <مقطع هوية='٠٥٠٨٩'>فَصَارَتْ كَـ<حرف>مَتَىْ</حرف> وَ<حرف>أَيْنَ</حرف>
  </مقطع>
  <مقطع هوية='٢١٢٩٧'>وَكَذٰلِكَ  <حرف>مَنْ</حرف> وَ<حرف>مًا</حرف>
  </مقطع>
  <مقطع هوية='٠١٠٩٧'>لِأَنَّهُمَا يَجْرِيَانِ مَعَهَا وَلَا يُفَارِقَانِهًا</مقطع>
  <مقطع هوية='٦٦٨٥٦'>تَقُوْلُ  <قول هوية='٩٢٤٠٧'>مَنْ أَمَةَ اللّٰهِ ضَرَبَهًا</قول>
  </مقطع>
  <مقطع هوية='٢٢١٦٦'>وَ<قول هوية='٥٠٩١١'>مَا أَمَةَ اللّٰهِ أَتَاهًا</قول>
  </مقطع>
  <مقطع هوية='٨٤٥٧٥'>نَصْبٌ في كُلِّ ذًا</مقطع>
  <مقطع هوية='٤٧٣١٦'>لِأَنَّهُ أَنْ يَلِيَ هَذِهِ الْحُرُوْفَ الْفِعْلُ أَوْلَىْ</مقطع>
  <مقطع هوية='٧٥٠٤١'>كَمَا أَنَّهُ لَوُ اضْطُرَّ شَاعِرٌ في  <حرف>مَتَىْ</حرف> وَأَخَوَاتِهَا نَصَبَ فَقَالَ  <قول هوية='٣٧٧٧٢'>مَتَىْ زَيْدًا رَأَيْتَهُ</قول>
  </مقطع>

