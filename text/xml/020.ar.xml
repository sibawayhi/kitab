     بلاق="١-٣٣"
     درنبورج="١-٢٥"
     البكاء="١-١٣١"
     هارون="١-٦٦"
     يعقوب="١-١١٣"
     رقم="٢٠">
  <عنوان>
    <مقطع هوية='٠٦٥٠٧' رقم="١">هٰذَا بَاْبُ مَا يُجْرَى عَلَى الْمَوْضِعِ لَا عَلَى الِٱسْمِ الَّذِي قَبْلَهُ</مقطع>
  </عنوان>
  <مقطع هوية='٨٦٣٦٠' رقم="٢">وَذٰلِكَ قَوْلُكَ <قول هوية='٤٣٠٠٩' رقم="١">لَيْسَ زَيْدٌ بِجَبَاْنٍ وَلَا بَخِيْلًا</قول>
  </مقطع>
  <مقطع هوية='٤٣٢٤٣' رقم="٣">وَ<قول هوية='٥٧٨٠١' رقم="٢">مَا زَيْدٌ بِأَخِيْكَ وَلَا صَاْحِبَكَ</قول>
  </مقطع>
  <مقطع هوية='١٢٣٠٠' رقم="٤">وَالْوَجْهُ فِيْهِ الْجَرُّ</مقطع>
  <مقطع هوية='٦٧٣٤٢' رقم="٥">لِأَنَّكَ تُرِيْدُ أَنْ تُشْرِكَ بَيْنَ الْخَبَرَيْنِ</مقطع>
  <مقطع هوية='٧٥١٨٦' رقم="٦">وَلَيْسَ يَنْقُضُ إِجْرَاْؤُهُ عَلَيْهِ الْمَعْنَى</مقطع>
  <مقطع هوية='٣٧٩٩٥' رقم="٧">وَأَنْ يَكُوْنَ آخِرُهُ عَلَى أَوَّلِهِ أَوْلَى</مقطع>
  <مقطع هوية='٠٢٩٦٣' رقم="٨">لِيَكُوْنَ حَاْلُهُمَا فِي الْبَاْءِ سَوَاْءً</مقطع>
  <مقطع هوية='٨٤٤٩٥' رقم="٩">كَحَاْلِهِمَا فِي غَيْرِ الْبَاْءِ مَعَ قُرْبِهِ مِنْهُ</مقطع>
  <مقطع هوية='٩٣٤٩٩' رقم="١٠">وَقَدْ حَمَلَهُمْ قُرْبُ الْجِوَاْرِ</مقطع>
  <مقطع هوية='٥١٨٢٢' رقم="١١">عَلَى أَنْ جَرُّوْا <قول هوية='٢٣٤٨٠' رقم="٣">هٰذَا جُحْرُ ضَبٍّ خَرِبٍ</قول> وَنَحْوَهُ</مقطع>
  <مقطع هوية='٤٢٩٢٥' رقم="١٢">فَكَيْفَ مَا يَصِحُّ مَعْنَاْهُ</مقطع>
  <مقطع هوية='٩٤٩٦٥' رقم="١٣">وَمِمَّا جَاْءَ مِنَ الشِّعْرِ فِي الْإِجْرَاْءِ عَلَى الْمَوْضِعِ قَوْلُ عُقَيْبَةَ الْأَسَدِيّ</مقطع>
  <شاهدة هوية='١٠٤٦٤' مقطع="١٤" رقم="١">
    <بيت>
      <مصراع>مُعَاْوِيَ إِنَّمَا بَشَرٌ فَأَسْجِحْ</مصراع>
      <مصراع>فَلَسْنَا بِالْجِبَاْلِ <ثبات>وَلَا الْحَدِيْدَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥١٦٠٨' رقم="١٥">لِأَنَّ الْبَاْءَ دَخَلَتْ عَلَى شَيءٍ</مقطع>
  <مقطع هوية='٧٢٣٤٣' رقم="١٦">لَوْ لَمْ تَدْخُلْ عَلَيْهِ لَمْ تُخِلَّ بِالْمَعْنَى</مقطع>
  <مقطع هوية='١٦٦٩٤' رقم="١٧">وَلَمْ يُحْتَجْ إِلَيْهَا وَكَانَ نَصْبًا</مقطع>
  <مقطع هوية='٤٧٩١٣' رقم="١٨">أَلَا تَرَى أَنَّهُمْ يَقُوْلُوْنَ <قول هوية='٥٤٦٣٨' رقم="٤">حَسْبُكَ هٰذَا</قول> وَ<قول هوية='٤٤٨٢٨' رقم="٥">بِحَسْبِكِ هٰذَا</قول>
  </مقطع>
  <مقطع هوية='١٩٢٤٠' رقم="١٩">فَلَمْ تُغَيِّرْ الْبَاْءُ مَعْنًى</مقطع>
  <مقطع هوية='٣٩٤٠١' رقم="٢٠">وَجَرَى هٰذَا مَجْرَاْهُ قَبْلَ أَنْ تَدْخُلَ الْبَاْءُ</مقطع>
  <مقطع هوية='٨٨٠٥٩' رقم="٢١">لِأَنَّ <حرف>بِحَسْبِكَ</حرف> فِي مَوْضِعِ ابْتِدَاْءٍ</مقطع>
  <مقطع هوية='٢٠١٥١' رقم="٢٢">وَمِثْلُ ذٰلِكَ قَوْلِ لَبِيْد</مقطع>
  <شاهدة هوية='٠١٨٢٨' مقطع="٢٣" رقم="٢">
    <بيت>
      <مصراع>فَإِنْ لَمْ تَجِدْ <ثبات>مِنْ دُوْنِ</ثبات> عَدْنَاْنَ وَاْلِدًا</مصراع>
      <مصراع>
      <ثبات>وَدُوْنَ</ثبات> مَعَدٍّ فَلْتَزَعْكَ الْعَوَاْذِلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٢٧٦٨' رقم="٢٤">وَالْجَرُّ الْوَجْهُ</مقطع>
  <مقطع هوية='٦٧٩٧٣' رقم="٢٥">وَلَوْ قُلْتَ <قول هوية='٩١٩٤١' رقم="٦">مَا زَيْدٌ عَلَى قَوْمِنَا وَلَا عِنْدَنَا</قول>
  </مقطع>
  <مقطع هوية='٥٣٢٣٢' رقم="٢٦">كَاْنَ النَّصْبُ لَيْسَ غَيْرُ</مقطع>
  <مقطع هوية='٧٨١٣٣' رقم="٢٧">لِأَنَّهُ لَا يَجُوْزُ حَمْلُهُ عَلَى <حرف>عَلَى</حرف>
  </مقطع>
  <مقطع هوية='٤٨٥٩٥' رقم="٢٨">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <حرف>وَلَا عَلَى عِنْدِنَا</حرف> لَمْ يَكُنْ</مقطع>
  <مقطع هوية='٤٠٩٨١' رقم="٢٩">لِأَنَّ <حرف>عِنْدَنَا</حرف> لَا تُسْتَعْمَلُ إِلَّا ظَرْفًا</مقطع>
  <مقطع هوية='٧١١٧٢' رقم="٣٠">وَإِنَّمَا أَرَدْتَ أَنْ تُخْبِرَ أَنَّهُ لَيْسَ عِنْدَكُمْ</مقطع>
  <مقطع هوية='١٤٠١٤' رقم="٣١">وَتَقُوْلُ <قول هوية='٤٦٥٥١' رقم="٧">أَخَذْتَنَا بِالْجَوْدِ وَفَوْقَهُ</قول>
  </مقطع>
  <مقطع هوية='٨٧٠٠٩' رقم="٣٢">لِأَنَّهُ لَيْسَ مِنْ كَلَامِهِمْ <حرف>وَبْفَوْقِهِ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٢٣٣' رقم="٣٣">وَمِثْلُ <حرف>وَدُوْنَ مَعَدٍّ</حرف> قَوْلِ الشَّاْعِرِ وَهُوَ كَعْبُ بْنُ جُعَيْلٍ</مقطع>
  <شاهدة هوية='٤٨٩٦٧' مقطع="٣٤" رقم="٣">
    <بيت>
      <مصراع>أَلَا حَيَّ نَدْمَاْنِي عُمَيْرِ بْنِ عَاْمِرٍ</مصراع>
      <مصراع>إِذَا مَا تَلَاْقَيْنَا مِنَ الْيَوْمِ أَوْ غَدَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٢٧٥٠' رقم="٣٥">وَقَاْلَ الْعَجَّاْجُ</مقطع>
  <شاهدة هوية='٥٠٣٢٧' مقطع="٣٦" رقم="٤">
    <بيت>
      <مصراع>كَشْحًا طَوَى مِنْ بَلَدٍ مُخْتَاْرًا</مصراع>
      <مصراع>مِنْ يَأْسَةِ الْيَاْئِسِ أَوْ حِذَاْرَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٢٦٥٣' رقم="٣٧">وَتَقُوْلُ <قول هوية='٢١٥٤٩' رقم="٨">مَا زَيْدٌ كَعَمْرٍو وَلَا شَبِيْهًا بِهِ</قول>
  </مقطع>
  <مقطع هوية='٦٤٨٧١' رقم="٣٨">وَ<قول هوية='٥٩٢٢٦' رقم="٩">مَا عَمْرٌو كَخَاْلِدٍ وَلَا مُفْلِحًا</قول>
  </مقطع>
  <مقطع هوية='٨٩٦٨٢' رقم="٣٩">النَّصْبُ فِي هٰذَا جَيِّدٌ لِأَنَّكَ إِنَّمَا تُرِيْدُ</مقطع>
  <مقطع هوية='١١٤٧٠' رقم="٤٠">
    <قول هوية='٩٦٨٣٩' رقم="١٠">مَا هُوَ مِثْلَ فُلَاْنٍ وَلَا مُفْلِحًا</قول>
  </مقطع>
  <مقطع هوية='٣٩١٥٠' رقم="٤١">هٰذَا وَجْهُ <!-- [مَعْنَى] -->الْكَلَاْمِ</مقطع>
  <مقطع هوية='٥٨٧٦١' رقم="٤٢">فَإِنْ أَرَدْتَ أَنْ تَقُوْلَ <قول هوية='٥١٨٢١' رقم="١١">وَلَا بِمَنْزِلَةِ مَنْ يُشْبِهُهُ</قول> جَرَرْتَ</مقطع>
  <مقطع هوية='٠٠٤٠٢' رقم="٤٣">وَذٰلِكَ قَوْلُكَ <قول هوية='٥٦٢٩٩' رقم="١٢">مَا أَنْتَ كَزَيْدٍ وَلَا شَبِيْهٍ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٣٩٦٥١' رقم="٤٤">فَإِنَّمَا أَرَدْتَ <حرف>وَلَا كَشَبِيْهٍ بِهِ</حرف>
  </مقطع>
  <مقطع هوية='٨٠٤١١' رقم="٤٥">وَإِذَا قُلْتَ <قول هوية='٩٦٠١٥' رقم="١٣">مَا أَنْتَ بِزَيْدٍ وَلَا قَرِيْبًا مِنْهُ</قول>
  </مقطع>
  <مقطع هوية='٥٧٠٢٤' رقم="٤٦">فَإِنَّهُ لَيْسَ هٰهُنَا مَعْنًى بِالْبَاْءِ لَمْ يَكُنْ قَبْلَ أَنْ تَجِيْءَ بِهَا</مقطع>
  <مقطع هوية='٥٢٨٥٩' رقم="٤٧">وَأَنْتَ إِذَا ذَكَرْتَ الْكَاْفَ تُمَثِّلُ</مقطع>
  <مقطع هوية='٥٦٧٣٥' رقم="٤٨">وَتَكُوْنُ <حرف>قَرِيْبًا</حرف> هٰهُنَا إِنْ شِئْتَ ظَرْفًا</مقطع>
  <مقطع هوية='٠٥٣٣٥' رقم="٤٩">فَإِنْ لَمْ تَجْعَلْ <حرف>قَرِيْبًا</حرف> ظَرْفًا</مقطع>
  <مقطع هوية='٩٠٦٣٥' رقم="٥٠">جَاْزَ فِيْهِ الْجَرُّ عَلَى الْبَاْءِ</مقطع>
  <مقطع هوية='٨٠٩٤٢' رقم="٥١">وَالنَّصْبُ عَلَى الْمَوْضِعِ</مقطع>
