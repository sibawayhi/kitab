     البكاء="١-٦٩"
     رقم="٤">

   <عنوان>
      <مقطع هوية='٨٠١٤١'>هٰذَا بَابُ اللَّفْظِ لِلْمَعَانِي</مقطع>
   </عنوان>
   <مقطع هوية='٥٦٣٦٤'>اِعْلَمْ أَنَّ مِن كَلَامِهِمِ</مقطع>
   <مقطع هوية='٨٢٦٩٩'>اخْتِلَافُ اللَّفْظَيِنِ لِاخْتِلَافِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع هوية='٨٤٨٢٨'>وَاخْتِلَافُ اللَّفْظَيْنِ وَالْمَعْنَى وَاحِدٌ</مقطع>
   <مقطع هوية='٩٩٩٥١'>وَاتِّفِاقُ اللَّفْظَيْنِ وَاخْتِلَافُ الْمَعْنَيَيْنِ</مقطع>
   <مقطع هوية='٢٦٠١٤'>وَسَتَرَى ذٰلِكَ إِنْ شَاءَ اللّٰهُ تَعَالَى</مقطع>
   <مقطع هوية='٨٧٣٦٢'>فَاخْتِلَافُ اللَّفْظَيْنِ لِاخْتِلَافِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع هوية='٤٦٥٦٣'>هُوَ نَحْوُ <حرف>جَلَسَ</حرف> وَ<حرف>ذَهَبَ</حرف></مقطع>
   <مقطع هوية='٦٨٥٨٨'>وَاخْتِلَافُ اللَّفْظَيْنِ وَالْمَعْنَى وَاحِدٌ</مقطع>
   <مقطع هوية='٣٤٧٢٤'>نَحْوُ <حرف>ذَهَبَ</حرف> وَ<حرف>انْطَلَقَ</حرف></مقطع>
   <مقطع هوية='٤٢٢٤٦'>وَاتِّفَاقُ اللَّفْظَيْنِ وَالْمَعْنَى مُخْتَلِفٌ</مقطع>
   <مقطع هوية='٥٨٩٦٢'>قَوْلُكَ <حرف>وَجَدْتُ عَلَيْهِ</حرف></مقطع>
   <مقطع هوية='٤٥٦٧٧'>مِنَ <حرف>الْمَوْجِدَةِ</حرف></مقطع>
   <مقطع هوية='٢٠٤٨٦'>وَ<حرف>وَجَدْتُ</حرف></مقطع>
   <مقطع هوية='٥٩٣٨٣'>إِذَا أَرَدْتَ <حرف>وِجْدَانَ الضَّالَّةِ</حرف></مقطع>
   <مقطع هوية='٢٥٧٤٥'>وَأَشْبَاهُ هٰذَا كَثِيرٌ</مقطع>

