<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٧"
     درنبورج="١-٦"
     هارون="١-٢٤"
     يعقوب="١-٤٩"
     البكاء="١-٦٩"
     رقم="٤">

   <عنوان>
      <مقطع رقم="١">هٰذَا بَابُ اللَّفْظِ لِلْمَعَانِي</مقطع>
   </عنوان>
   <مقطع رقم="٢">اِعْلَمْ أَنَّ مِن كَلَامِهِمِ</مقطع>
   <مقطع رقم="٣">اخْتِلَافُ اللَّفْظَيِنِ لِاخْتِلَافِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع رقم="٤">وَاخْتِلَافُ اللَّفْظَيْنِ وَالْمَعْنَى وَاحِدٌ</مقطع>
   <مقطع رقم="٥">وَاتِّفِاقُ اللَّفْظَيْنِ وَاخْتِلَافُ الْمَعْنَيَيْنِ</مقطع>
   <مقطع رقم="٦">وَسَتَرَى ذٰلِكَ إِنْ شَاءَ اللّٰهُ تَعَالَى</مقطع>
   <مقطع رقم="٧">فَاخْتِلَافُ اللَّفْظَيْنِ لِاخْتِلَافِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع رقم="٨">هُوَ نَحْوُ <قول>جَلَسَ</قول> وَ <قول>ذَهَبَ</قول>
   </مقطع>
   <مقطع رقم="٩">وَاخْتِلَافُ اللَّفْظَيْنِ وَالْمَعْنَى وَاحِدٌ</مقطع>
   <مقطع رقم="١٠">نَحْوُ <قول>ذَهَبَ</قول> وَ <قول>انْطَلَقَ</قول>
   </مقطع>
   <مقطع رقم="١١">وَاتِّفَاقُ اللَّفْظَيْنِ وَالْمَعْنَى مُخْتَلِفٌ</مقطع>
   <مقطع رقم="١٢">قَوْلُكَ <قول>وَجَدْتُ عَلَيْهِ</قول>
   </مقطع>
   <مقطع رقم="١٣">مِنَ <حرف>الْمَوْجِدَةِ</حرف>
   </مقطع>
   <مقطع رقم="١٤">وَ<قول>وَجَدْتُ</قول>
   </مقطع>
   <مقطع رقم="١٥">إِذَا أَرَدْتَ <حرف>وِجْدَانَ الضَّالَّةِ</حرف>
   </مقطع>
   <مقطع رقم="١٦">وَأَشْبَاهُ هٰذَا كَثِيرٌ</مقطع>
</باب>

