<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٧"
     درنبورج="١-٦"
     هارون="١-٢٤"
     يعقوب="١-٤٩"
     البكاء="١-٦٩"
     رقم="٤">

   <عنوان>
      <مقطع هوية='٨٠١٤١' رقم="١">هٰذَا بَابُ اللَّفْظِ لِلْمَعَانِي</مقطع>
   </عنوان>
   <مقطع هوية='٥٦٣٦٤' رقم="٢">اِعْلَمْ أَنَّ مِن كَلَامِهِمِ</مقطع>
   <مقطع هوية='٨٢٦٩٩' رقم="٣">اخْتِلَافُ اللَّفْظَيِنِ لِاخْتِلَافِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع هوية='٨٤٨٢٨' رقم="٤">وَاخْتِلَافُ اللَّفْظَيْنِ وَالْمَعْنَى وَاحِدٌ</مقطع>
   <مقطع هوية='٩٩٩٥١' رقم="٥">وَاتِّفِاقُ اللَّفْظَيْنِ وَاخْتِلَافُ الْمَعْنَيَيْنِ</مقطع>
   <مقطع هوية='٢٦٠١٤' رقم="٦">وَسَتَرَى ذٰلِكَ إِنْ شَاءَ اللّٰهُ تَعَالَى</مقطع>
   <مقطع هوية='٨٧٣٦٢' رقم="٧">فَاخْتِلَافُ اللَّفْظَيْنِ لِاخْتِلَافِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع هوية='٤٦٥٦٣' رقم="٨">هُوَ نَحْوُ <حرف>جَلَسَ</حرف> وَ<حرف>ذَهَبَ</حرف></مقطع>
   <مقطع هوية='٦٨٥٨٨' رقم="٩">وَاخْتِلَافُ اللَّفْظَيْنِ وَالْمَعْنَى وَاحِدٌ</مقطع>
   <مقطع هوية='٣٤٧٢٤' رقم="١٠">نَحْوُ <حرف>ذَهَبَ</حرف> وَ<حرف>انْطَلَقَ</حرف></مقطع>
   <مقطع هوية='٤٢٢٤٦' رقم="١١">وَاتِّفَاقُ اللَّفْظَيْنِ وَالْمَعْنَى مُخْتَلِفٌ</مقطع>
   <مقطع هوية='٥٨٩٦٢' رقم="١٢">قَوْلُكَ <حرف>وَجَدْتُ عَلَيْهِ</حرف></مقطع>
   <مقطع هوية='٤٥٦٧٧' رقم="١٣">مِنَ <حرف>الْمَوْجِدَةِ</حرف></مقطع>
   <مقطع هوية='٢٠٤٨٦' رقم="١٤">وَ<حرف>وَجَدْتُ</حرف></مقطع>
   <مقطع هوية='٥٩٣٨٣' رقم="١٥">إِذَا أَرَدْتَ <حرف>وِجْدَانَ الضَّالَّةِ</حرف></مقطع>
   <مقطع هوية='٢٥٧٤٥' رقم="١٦">وَأَشْبَاهُ هٰذَا كَثِيرٌ</مقطع>

   <التحرير>
     <تشكيل  نسخة="1" نسبة="100"/>
     <تقطيع  نسخة="1"/>
     <أقوال  نسخة="1" نسبة="100"/>
   </التحرير>

</باب>

