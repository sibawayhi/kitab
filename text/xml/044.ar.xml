  <عنوان>
    <مقطع هوية='٨٧٣٥٢'>هٰذَا بَاْبُ مَا يَكُوْنُ فِيْهِ الْمَصْدَرُ حِيْنًا لِسَعَةِ الْكَلَاْمِ وَالِاخْتِصَاْرِ</مقطع>
  </عنوان>
  <مقطع هوية='٦٤٠٣٧'>وَذٰلِكَ قَوْلُكَ <قول هوية='٥٩٣٨٣'>مَتَى سِيْرَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع هوية='٢٢٨٩٣'>فَيَقُوْلُ <حرف>مَقْدَمَ الْحَاْجِّ</حرف></مقطع>
  <مقطع هوية='٥٢٥٥٩'>وَ<حرف>خُفُوْقَ النَّجْمِ</حرف></مقطع>
  <مقطع هوية='١٥٦٥٩'>وَ<حرف>خِلَاْفَةَ فُلَاْنٍ</حرف></مقطع>
  <مقطع هوية='٤٦٠٧٠'>وَ<حرف>صَلَاْةَ الْعَصْرِ</حرف></مقطع>
  <مقطع هوية='٥٢٠٢٧'>فَإِنَّمَا هُوَ <حرف>زَمَنَ مَقْدَمِ الْحَاْجِّ</حرف></مقطع>
  <مقطع هوية='٦٣٣١١'>وَ<حرف>حِيْنَ خُفُوْقِ النَّجْمُ</حرف></مقطع>
  <مقطع هوية='٦٢٨٩٥'>وَلَكِنَّهُ عَلَى سَعَةِ الْكَلَاْمِ وَالِاخْتِصَاْرِ</مقطع>

  <مقطع هوية='٧٩٣٢٣'>وَإِنْ قَاْلَ  <قول هوية='٥١٣٩١'>كَمْ سِيْرَ عَلَيْهِ</قول> فَكَذٰلِكَ</مقطع>
  <مقطع هوية='٧٦٥٧٧'>وَإِنْ رَفَعْتَهُ أَجْمَعَ كَاْنَ عَرَبِيَّا كَثِيْرا</مقطع>
  <مقطع هوية='٨٨٤١٦'>وَيَنْتَصِبُ عَلَى أَنْ تَجْعَلَ  <حرف>كَمْ</حرف> ظَرْفًا</مقطع>
  <مقطع هوية='١٢١٢٣'>وَلَيْسَ هٰذَا فِي سَعَةِ الْكَلَاْمِ وَالِاخْتِصَاْرِ</مقطع>
  <مقطع هوية='٨٩٧٤٠'>بِأَبْعَدَ مِنْ <قول هوية='٦٢٣٩٨'>صِيْدَ عَلَيْهِ يَوْمَاْنِ</قول></مقطع>
  <مقطع هوية='٦٦٥٩٠'>وَ<قول هوية='٩٧٠٨٨'>وُلِدَ لَهُ سِتُّوْنَ عَاْمًا</قول>
  </مقطع>
  <مقطع هوية='٤٥٢٤٦'>وَتَقُوْلُ <قول هوية='٥٩٣١٤'>سِيْرَ عَلَيْهِ فَرْسَخَاْنِ يَوْمَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٩٣١١'>لِأَنَّكَ شَغَلْتَ الْفِعْلَ بِالفَرْسَخَيْنَ</مقطع>
  <مقطع هوية='٤٥٢٥٨'>فَصَاْرَ كَقَوْلِكَ  <قول هوية='٨١٥٢٦'>سِيْرَ عَلَيْهِ بَعِيْرُكَ يَوْمَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٤٨٧٠١'>وَإِنْ شِئْتَ قُلْتَ  <قول هوية='٩٠٦٤٧'>سِيْرَ عَلَيْهِ فَرْسَخَيْنِ يَوْمَاْنِ</قول>
  </مقطع>
  <مقطع هوية='٢٩٩٨١'>أَيُّهُمَا رَفَعْتَهُ صَاْرَ الْآخَرُ ظَرْفًا</مقطع>
  <مقطع هوية='٨٣٣٤٧'>وَإِنْ شِئْتَ نَصَبْتَهُ عَلَى الْفِعْلِ فِي سَعَةِ الْكَلَاْمِ لَا عَلَى الظَّرْفِ</مقطع>
  <مقطع هوية='٢٨٩٥٤'>كَمَا جَاْزَ  <قول هوية='٨٣٤٢٠'>يَا ضَاْرِبَ الْيَوْمِ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٢٨٦٥٧'>أَوْ  <قول هوية='٤٤٧٨٥'>يَا سَاْئِرَ الْيَوْمِ فَرْسَخَيْنِ</قول>
  </مقطع>
  <مقطع هوية='١١١١٨'>وَتَقُوْلُ  <قول هوية='٨٣٣٨٠'>صِيْدَ عَلَيْهِ يَوْمَ الْجُمْعَةِ غُدْوَةُ يَا فَتَى</قول></مقطع>
  <مقطع هوية='٨٢٩٩٧'>وَإِنْ شِئْتَ جَعَلْتَهُمَا ظَرْفًا</مقطع>
  <مقطع هوية='٧٣٥٥٣'>لِأَنَّكَ كَأَنَّكَ قُلْتَ <قول هوية='٥٦٥٢٦'>السَّيْرُ فِي يَوْمِ الْجُمْعَةِ فِي هَذِهِ السَّاْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٣٠٥٤١'>وَإِنْ شِئْتَ قُلْتَ <قول هوية='٩٢٤٤٤'>سَيْرَ عَلَيْهِ يَوْمُ الْجُمْعَةِ غُدْوَةَ</قول>
  </مقطع>
  <مقطع هوية='٥١٦٠١'>كَمَا تَقُوْلُ <قول هوية='٠٥٢٥٤'>سِيْرَ عَلَيْهِ يَوْمُ الْجُمْعَةِ صَبَاْحًا</قول>
  </مقطع>
  <مقطع هوية='٨٦٦٣٨'>أَيْ <قول هوية='٢٠٠٠٠'>سَيْرَ عَلَيْهِ يَوْمُ الْجُمْعَةِ فِي هَذِهِ السَّاْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٦٥٨٢٧'>وَإِنَّمَا الْمَعْنَى <قول هوية='٣٧١٥٩'>كَاْنَ ابْتِدَاْءُ السَّيْرِ فِي هَذِهِ السَّاْعَةِ</قول></مقطع>

  <مقطع هوية='٧٤١٥١'>وَمِثْلُ ذٰلِكَ  <قول هوية='٧٤٥٨٣'>مَا لَقِيْتُهُ مُذْ يَوْمِ الْجُمْعَةِ صَبَاْحًا</قول>
  </مقطع>
  <مقطع هوية='٩٠٠٦١'>أَيْ فِي هَذِهِ السَّاْعَةِ</مقطع>
  <مقطع هوية='٤٦٨٧٦'>وَإِنَّمَا مَعْنَاْهُ أَنَّهُ فِي هَذِهِ السَّاْعَةِ وَقَعَ الِّلْقَاْءُ</مقطع>
  <مقطع هوية='١٠٣٤٧'>كَمَا كَاْنَ ذٰلِكَ فِي  <قول هوية='٠٠١٤٠'>سِيْرَ عَلَيْهِ يَوْمُ الْجُمْعَةِ غُدْوَةَ</قول>
  </مقطع>
  <مقطع هوية='٣٩٤٥٩'>وَتَقُوْلُ  <قول هوية='٥٤٣٠٩'>سَيْرَ عَلَيْهِ يَوْمُ الْجُمْعَةِ غَدْوَةُ</قول>
  </مقطع>
  <مقطع هوية='٨٤٧٩٠'>تَجْعَلُ  <حرف>غَدْوَةُ</حرف> بَدَلًا مِنْ  <حرف>الْيُوْمُ</حرف>
  </مقطع>
  <مقطع هوية='٣٤٤١٠'>كَمَا تَقُوْلُ  <قول هوية='٠٠٧٧١'>ضُرِبَ الْقَوْمُ بَعْضُهُمْ</قول>
  </مقطع>

  <مقطع هوية='١٨٨٧٦'>وَتَقُوْلُ  <قول هوية='٢١٧٣٦'>إِذَا كَاْنَ غَدٌ فَأْتِنِي</قول>
  </مقطع>
  <مقطع هوية='١٥٠٢٣'>وَ<قول هوية='٢٥٠٥٦'>إِذَا كَاْنَ يَوْمُ الْجُمْعَةِ فَالْقَنِي</قول>
  </مقطع>
  <مقطع هوية='٤١٤٠١'>فَالْفِعْلُ لِغَدٍ وَالْيَوْمِ</مقطع>
  <مقطع هوية='٠٦٠٨٣'>كَقَوْلِكَ  <قول هوية='٥١٥٥٤'>إِذَا جَاْءَ غَدٌ فَأتِنِي</قول>
  </مقطع>
  <مقطع هوية='٥٤٤٣٩'>وَإِنْ شِئْتَ قُلْتَ  <قول هوية='٨٣٥٨٢'>إِذَا كَاْنَ غَدًا فَأْتِنِي</قول>
  </مقطع>
  <مقطع هوية='٧٨٨٠٨'>وَهِىَ لُغَةُ بَنِي تَمِيْمٍ</مقطع>
  <مقطع هوية='٥١٥٥١'>وَالْمَعْنَى أَنَّهُ لَقِىَ رَجُلًا فَقَاْلَ لَهُ  <قول هوية='٠٣٣٣٩'>إِذَا كَاْنَ مَا نَحْنُ عَلَيْهِ مِنْ السَّلَاْمَةِ</قول>
  </مقطع>
  <مقطع هوية='٣١٨١٧'>أَوْ  <قول هوية='٥٠٠٤٢'>كَاْنَ مَا نَحْنُ عَلَيْهِ مِنَ الْبَلَاْءِ فِي غَدٍ فَأْتِنِي</قول>
  </مقطع>
  <مقطع هوية='٥٤٧٢١'>وَلَكِنَّهُمْ أَضْمَرُوْا اسْتِخْفَاْفًا لِكَثْرَةِ  <حرف>كَاْنَ</حرف> فِي كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='١٣٨٧٣'>لِأَنَّهُ الْأَصْلُ لِمَا مَضَى وَمَا سَيَقَعُ</مقطع>
  <مقطع هوية='١٩٤٢٩'>وَحَذَفُوْا كَمَا قَاْلُوْا  <قول هوية='٢١٥٣٧'>حِيْنَئِذٍ الْآنَ</قول>
  </مقطع>
  <مقطع هوية='٧٨٠٢٧'>وَإِنَّمَا يُرِيْدُ  <قول هوية='٦٩٦٦١'>حِيْنَئِذٍ وَاسْمَعْ إِلَيَّ الْآنَ</قول>
  </مقطع>
  <مقطع هوية='٩٩١٦٦'>فَحَذَفَ  <حرف>وَاْسْمَعْ</حرف>
  </مقطع>
  <مقطع هوية='٦٩٤٧٢'>كَمَا قَاْلَ  <قول هوية='٨٦٨٧١'>تَاْللّٰهِ مَا رَأَيْتُ كَاْلْيَوْمِ رَجُلًا</قول>
  </مقطع>
  <مقطع هوية='٨١٠٧٤'>أَيْ  <قول هوية='١١٦٤٣'>كَرَجُلٍ أَرَاْهُ الْيَوْمَ رَجُلًا</قول>
  </مقطع>
  <مقطع هوية='٠٠٢٩٠'>وَإِنَّمَا أَضْمَرُوْا مَا كَاْنَ يَقَعُ مُظْهَرًا اسْتِخْفَاْفًا</مقطع>
  <مقطع هوية='٢٩٢٠٦'>وَلِأَنَّ الْمُخَاْطَبَ يَعْلَمُ مَا يَعْنِي فَجَرَى بِمَنْزِلَةِ الْمَثَلِ</مقطع>
  <مقطع هوية='٢٩٤٩٣'>كَمَا تَقُوْلُ  <قول هوية='٠٦٧٤١'>لَا عَلَيْكَ</قول>
  </مقطع>
  <مقطع هوية='٧١٦٣٧'>وَقَدْ عَرَفَ الْمُخَاْطَبُ مَا تَعْنِي</مقطع>
  <مقطع هوية='٦٤٠٢٤'>أَنَّهُ  <قول هوية='١٩٥٩٩'>لَا بَأْسَ عَلَيْكَ</قول> وَ<قول هوية='٢١٢٠٤'>لَا ضَرَّ عَلَيْكَ</قول>
  </مقطع>
  <مقطع هوية='٨٩٣٥١'>وَلَكِنَّهُ حُذِفَ لِكَثْرَةِ هٰذَا فِي كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='٥٩٥٣٨'>وَلَا يَكُوْنُ هٰذَا فِي غَيْرِ  <قول هوية='٣٥٠٣٥'>لَا عَلَيْكَ</قول>
  </مقطع>
  <مقطع هوية='٧٧١٠٧'>وَقَدْ تَقُوْلُ  <قول هوية='٨٩٠٩٤'>إِذَا كَاْنَ غَدًا فَأْتِنِي</قول>
  </مقطع>
  <مقطع هوية='٠٨٢٢٨'>كَأَنَّهُ ذَكَرَ أَمْرًا إِمَّا خُصُوْمَةً وَإِمَّا صُلْحًا</مقطع>
  <مقطع هوية='٤٥٣٣٣'>فَقَاْلَ  <قول هوية='٨٣٣٩٣'>إِذَا كَاْنَ غَدًا فَأْتِنِي</قول>
  </مقطع>
  <مقطع هوية='٣٠٨٧٩'>فَهٰذَا جَاْئِزٌ فِي كُلِّ فِعْلٍ</مقطع>
  <مقطع هوية='٧٩٩٥٠'>لِأَنَّكَ إِنَّمَا أَضْمَرْتَ بَعْدَ مَا ذَكَرْتَ مُظْهَرًا</مقطع>
  <مقطع هوية='٨٢٢٨٦'>وَالْأَوَّلُ مَحْذُوْفٌ مِنْهُ لَفْظُ الْمُظْهَرِ وَأَضْمَرُوْا اسْتِخْفَاْفًا</مقطع>
  <مقطع هوية='٨٧٢٧٢'>فَإِنْ قُلْتَ  <قول هوية='٦٥٣٠٦'>إِذَا كَاْنَ اللَّيْلُ فَأْتِنِي</قول>
  </مقطع>
  <مقطع هوية='٦٦٣٩٩'>لَمْ يَجُزْ ذٰلِكَ لِأَنَّ  <حرف>اللَّيْلَ</حرف> لَا يَكُوْنُ ظَرْفًا</مقطع>
  <مقطع هوية='٥٨٧٥٧'>إِلَّا أَنْ تَعْنِي الَّلَيْلَ كُلَّهَ عَلَى مَا ذَكَرْتُ لَكَ مِنْ التَّكْثِيْرِ</مقطع>
  <مقطع هوية='٤٣٩٣٧'>فَإِنْ وَجَّهْتَهُ عَلَى إِضْمَاْرِ شَيْءٍ قَدْ ذَكَرْتَ عَلَى ذٰلِكَ الْحَدِّ جَاْزَ</مقطع>
  <مقطع هوية='٣٠٣٢٦'>وَكَذٰلِكَ أَخَوَاْتُ اللَّيْلِ</مقطع>
  <مقطع هوية='٠٤٢٩٩'>وَمِمَّا لَا يَحْسُنُ فِيْهِ إِلَّا النَّصْبُ قَوْلُهُمْ  <قول هوية='٠٣٤٢٣'>سِيَرَ عَلَيْهِ سَحَرَ</قول>
  </مقطع>
  <مقطع هوية='٣٤٥٧٨'>لَا يَكُوْنُ فِيْهِ إِلَّا أَنْ يَكُوْنَ ظَرْفًا</مقطع>
  <مقطع هوية='٥٦٦٦٠'>لِأَنَّهُمْ إِنَّمَا يَتَكَلَّمُوْنَ بِهِ فِي الرِّفْعِ وَالنَّصْبِ وَالجَرِّ بِالْأَلِفِ وَاللَّاْمِ</مقطع>
  <مقطع هوية='٨٥٤٤٤'>يَقُوْلُوْنَ  <قول هوية='٠١٦٨٩'>هٰذَا السَّحَرُ</قول>
  </مقطع>
  <مقطع هوية='٦٤٩٦٣'>وَ<قول هوية='٦٤٣٧٧'>بِأَعْلَى السَّحَرِ</قول>
  </مقطع>
  <مقطع هوية='٥١٣٧٢'>وَ<قول هوية='٨٧٩٤٧'>إِنَّ الْسَّحَرَ خَيْرٌ لَكَ مِنْ أَوَّلِ اللَّيْلِ</قول>
  </مقطع>
  <مقطع هوية='٩٣٣٥٣'>إِلَّا أَنْ تَجْعَلَهُ نَكِرَةً</مقطع>
  <مقطع هوية='٨٧٠٦٢'>فَتَقُوْلُ  <قول هوية='٥٠٤٦٩'>سِيْرَ عَلَيْهِ سَحَرٌ مِنَ الْأَسْحَاْرِ</قول>
  </مقطع>
  <مقطع هوية='٣٢٠٥٠'>لِأَنَّهُ يَتَمَكَّنُ فِي الْمَوْضِعِ</مقطع>
  <مقطع هوية='٥٦٤٦٩'>وَكَذَا تَحْقِيْرُه إِذَا عَنَيْتَ سَحَرَ لَيْلَتِكَ تَقُوْلُ  <قول هوية='٤٤٨١٨'>سِيْرَ عَلَيْهِ سُحَيْرًا</قول>
