  <عنوان>
    <مقطع هوية='٣٥٠١٢'>هٰذَا بَاْبُ تَكْسِيْرِ الْوَاْحِدِ لِلْجَمْعِ</مقطع>
  </عنوان>
  <قسم هوية='١٢٣٣٠'>
    <عنوان>بَاْبُ فَعْل</عنوان>
    <مقطع هوية='٩٨٠٣٨'>أَمَّا مَا كَاْنَ مِنَ الْأَسْمَاْءِ عَلَى ثَلَاْثَةِ أَحَرْفٍ وَكَاْنَ <مثال>فَعْلًا</مثال></مقطع>
    <مقطع هوية='٨٤٦٧٩'>فَإِنَّكَ إِذَا ثَلَّثْتَهُ إِلَى أَنْ تُعَشِّرَهُ فَإِنَّ تَكْسِيْرَهُ <مثال>أَفْعُلٌ</مثال></مقطع>
    <مقطع هوية='١٣٥٢٢'>وَذٰلِكَ قَوْلُكَ <اسم>كَلْبٌ</اسم> وَ<اسم عدد="ق">أَكْلُبٌ</اسم></مقطع>
    <مقطع هوية='٩٦٩٩٢'>وَ<اسم>كَعْبٌ</اسم> وَ<اسم عدد="ق">أَكْعُبٌ</اسم>
    </مقطع>
    <مقطع هوية='٧٣١٩١'>وَ<اسم>فَرْخٌ</اسم> وَ<اسم عدد="ق">أَفْرُخٌ</اسم>
    </مقطع>
    <مقطع هوية='١٨٧٧١'>وَ<اسم>نَسْرٌ</اسم> وَ<اسم عدد="ق">أَنْسُرٌ</اسم>
    </مقطع>
    <مقطع هوية='٥٢١٤٠'>فَإِذَا جَاوَزَ الْعَدَدُ هٰذَا</مقطع>
    <مقطع هوية='٤٧٢٠٠'>فَإِنَّ الْبِنَاْءَ قَدْ يَجِيْءُ عَلَى <مثال عدد="ك">فِعَاْلٍ</مثال> وَعَلَى <مثال عدد="ك">فُعُوْلٍ</مثال></مقطع>
    <مقطع هوية='٩٩٠٣٦'>وَذٰلِكَ قَوْلُكَ <اسم عدد="ك">كِلَاْبٌ</اسم> وَ<اسم عدد="ك">كِبَاْشٌ</اسم> وَ<اسم عدد="ك">بِغَاْلٌ</اسم></مقطع>
    <مقطع هوية='٢٠١٢٨'>وَأَمَّا الْـ<مثال>فُعُوْلُ</مثال> فَـ<اسم مثال="فُعُول">نُسُوْرٌ</اسم> وَ<اسم مثال="فُعُول">بُطُوْنٌ</اسم></مقطع>
    <مقطع هوية='٢٣٦٢٠'>وَرُبَّمَا كَاْنَتْ فِيْهِ اللُّغَتَاْنِ فَقَاْلُوْا <مثال>فُعُوْلٌ</مثال> وَ<مثال>فِعَاْلٌ</مثال></مقطع>
    <مقطع هوية='٥١٦٥٠'>وَذٰلِكَ قَوْلُهُمْ <اسم عدد="ك">فُرُوْخٌ</اسم> وَ<اسم عدد="ك">فِرَاْخٌ</اسم></مقطع>
    <مقطع هوية='٩٨٠٣٠'>وَ<اسم عدد="ك">كُعُوْبٌ</اسم> وَ<اسم عدد="ك">كِعَاْبٌ</اسم></مقطع>
    <مقطع هوية='٦٤٤٧٩'>وَ<اسم عدد="ك">فُحُوْلٌ</اسم> وَ<اسم عدد="ك">فِحَاْلٌ</اسم></مقطع>
    <مقطع هوية='٥١٠٣٢'>وَرُبَّمَا جَاْءَ <مثال>فَعِيْلًا</مثال> وَهُوَ قَلِيْلٌ</مقطع>
    <مقطع هوية='٣٣٩٣٩'>نَحْوُ الْـ<اسم عدد="ك">كَلِيْبِ</اسم> وَالْـ<اسم عدد="ك">عَبِيْدِ</اسم>
    </مقطع>
    <مقطع هوية='٣٥٠٤٤'>وَالْمُضَاْعَفُ يَجْرِي هٰذَا الْمَجْرَى</مقطع>
    <مقطع هوية='٨٣٥٨٥'>وَذٰلِكَ قَوْلُكَ <اسم>ضَبٌّ</اسم> وَ<اسم عدد="ق">أَضُبٌّ</اسم> وَ<اسم عدد="ك">ضِبَاْبٌ</اسم>
    </مقطع>
    <مقطع هوية='٨١٦٤٢'>كَمَا قُلْتَ <اسم>كَلْبٌ</اسم> وَ<اسم عدد="ق">أَكْلُبٌ</اسم> وَ<اسم عدد="ك">كِلَاْبٌ</اسم>
    </مقطع>
    <مقطع هوية='٧٩٢٤٥'>وَ<اسم>صَكٌّ</اسم> وَ<اسم عدد="ق">أَصُكٌّ</اسم> وَ<اسم عدد="ك">صِكَاْكٌ</اسم> وَ<اسم عدد="ك">صُكُوْكٌ</اسم>
    </مقطع>
    <مقطع هوية='٦١١٢٢'>كَمَا قَاْلُوْا <اسم>فَرْخٌ</اسم> وَ<اسم عدد="ق">أَفْرُخٌ</اسم> وَ<اسم عدد="ك">فِرَاْخٌ</اسم> وَ<اسم عدد="ك">فُرُوْخٌ</اسم></مقطع>
    <مقطع هوية='٠١٥٣٦'>وَ<اسم>بَتٌّ</اسم> وَ<اسم عدد="ق">أَبُتٌّ</اسم> وَ<اسم عدد="ك">بُتُوْتٌ</اسم> وَ<اسم عدد="ك">بِتَاْتٌ</اسم></مقطع>
    <مقطع هوية='٧٦٥٥٤'>وَالْيَاْءُ وَالْوَاْوُ بِتِلْكَ الْمَنْزِلَةِ</مقطع>
    <مقطع هوية='٣٠١٠٧'>تَقُوْلُ <اسم>ظَبْيٌ</اسم> وَ<اسم عدد="٢">ظَبْيَاْنِ</اسم> وَ<اسم عدد="ق">أَظْبٍ</اسم> وَ<اسم عدد="ك">ظِبَاْءٌ</اسم></مقطع>
    <مقطع هوية='٤٨٩٢٠'>كَمَا قَاْلُوْا <اسم>كَلْبٌ</اسم> وَ<اسم عدد="٢">كَلْبَاْنِ</اسم> وَ<اسم عدد="ق">أَكْلُبٌ</اسم> وَ<اسم عدد="ك">كِلَاْبٌ</اسم>
    </مقطع>
    <مقطع هوية='١٧٧٣٧'>وَ<اسم>دَلْوٌ</اسم> وَ<اسم عدد="٢">دَلْوَاْنِ</اسم> وَ<اسم عدد="ق">أَدْلٍ</اسم> وَ<اسم عدد="ك">دِلَاْءٌ</اسم></مقطع>
    <مقطع هوية='٤٤٨٣٣'>وَ<اسم>ثَدْيٌ</اسم> وَ<اسم عدد="٢">ثَدْيَاْنِ</اسم> وَ<اسم عدد="ق">أَثْدٍ</اسم> وَ<اسم عدد="ك">ثُدِيٌّ</اسم></مقطع>
    <مقطع هوية='٦٢٦٩٦'>كَمَا قَاْلُوْا <اسم عدد="ق">أَصْقُرٌ</اسم> وَ<اسم عدد="ك">صُقُوْرٌ</اسم></مقطع>
    <مقطع هوية='٢٧٧٩٣'>وَنَظِيْرُ <اسم عدد="ك">فِرَاْخٍ</اسم> وَ<اسم عدد="ك">فُرُوْخٍ</اسم> قَوْلُهُمْ الـ<اسم عدد="ك">دِّلَاْءُ</اسم> وَالـ<اسم عدد="ك">دُّلِيُّ</اسم></مقطع>
    <مقطع هوية='٦٢٧٨٢'>وَٱعْلَمْ أَنَّهُ قَدْ يَجِيْءُ فِي <مثال>فَعْلٍ</مثال>
    <مثال>أَفْعَاْلٌ</مثال> مَكَاْنَ <مثال>أَفْعُلٍ</مثال>
    </مقطع>
    <مقطع هوية='٠٩٢٤٦'>قَاْلَ الشَّاْعِرُ الْأَعْشَى</مقطع>
    <شاهدة هوية='٥٣٤٦٧' شاعر="الْأَعْشَى">
      <بيت>
        <مصراع>وُجِدْتَ إِذَا اصْطَلَحُوا خَيْرَهُم</مصراع>
        <مصراع>وَزَنْدُكَ أَثْقَبُ أَزْناْدِهَا</مصراع>
      </بيت>
    </شاهدة>
    <مقطع هوية='٦٩٧٨٣'>وَلَيْسَ ذٰلِكَ بِالْبَاْبِ فِي كَلَاْمِ الْعَرَبِ</مقطع>
    <مقطع هوية='٦٥٤٩٨'>وَمِنْ ذٰلِكَ قَوْلُهُمْ <اسم عدد="ق">أَفْرَاْخٌ</اسم> وَ<اسم عدد="ق">أَجْدَاْدٌ</اسم> وَ<اسم عدد="ق">أَفْرَاْدٌ</اسم></مقطع>
    <مقطع هوية='٣٤٣٢٧'>وَ<اسم عدد="ق">أَجُدٌّ</اسم> عَرَبِيَّةٌ وَهِيَ الْأَصْلُ</مقطع>
    <مقطع هوية='٠٥٩٩٧'>وَ<اسم>رَأْدٌ</اسم> وَ<اسم عدد="ق">أَرْآدٌ</اسم> وَالرَّأْدُ أَصْلُ اللَّحْيَيْنِ</مقطع>
    <مقطع هوية='٧٥٠٣٨'>وَرُبَّمَا كُسِّرَ الْــ<مثال>فَعْلُ</مثال> عَلَى <مثال>فِعَلَةٍ</مثال></مقطع>
    <مقطع هوية='٦١٨٥٥'>كَمَا كُسِّرَ عَلَى <مثال>فِعَاْلٍ</مثال> وَ<مثال>فُعُوْلٍ</مثال></مقطع>
    <مقطع هوية='٤٠٠٤٧'>وَلَيْسَ ذٰلِكَ بِالْأَصْلِ</مقطع>
    <مقطع هوية='٧٢٧٥٤'>وَذٰلِكَ قَوْلُهُمْ <اسم>جَبْءٌ</اسم> وَهِيَ الْكَمْأَةُ الْحَمْرَاْءُ وَ<اسم عدد="ك">جَبْأَةٌ</اسم></مقطع>
    <مقطع هوية='١٤٦٥٤'>وَ<اسم>فَقْعٌ</اسم> وَ<اسم عدد="ك">فِقَعَةٌ</اسم></مقطع>
    <مقطع هوية='٤٦٠٥٣'>وَ<اسم>قَعْبٌ</اسم> وَ<اسم عدد="ك">قِعَبَةٌ</اسم></مقطع>
    <مقطع هوية='٨٢٣٥٢'>وَقَدْ يُكَسَّرُ عَلَى <مثال>فُعُوْلَةٍ</مثال> وَ<مثال>فِعَاْلَةٍ</مثال></مقطع>
    <مقطع هوية='٤٣٩٩٨'>فَيُلْحِقُوْنَ هَاْءَ التَّأْنِيْثِ الْبِنَاْءَ وَهُوَ الْقِيَاْسُ أَنْ يُكَسَّرَ عَلَيْهِ</مقطع>
    <مقطع هوية='٥٦١٨٦'>وَزَعَمَ الْخَلِيْلُ أَنَّهُمْ إِنَّمَا أَرَاْدُوْا أَنْ يُحَقِّقُوْا التَّأْنِيْثَ</مقطع>
    <مقطع هوية='٧٧٥٢٧'>وَذٰلِكَ نَحْوُ الْـ<اسم عدد="ك">فِحَاْلَةِ</اسم> وَالْـ<اسم عدد="ك">بُعُوْلَةِ</اسم> وَالْـ<اسم عدد="ك">عُمُوْمَةِ</اسم></مقطع>
    <مقطع هوية='٢٢٠٣٣'>وَالْقِيَاْسُ فِي <مثال>فَعْلٍ</مثال> مَا ذَكَرْنَا</مقطع>
    <مقطع هوية='٠٤٢٥٦'>وَأَمَّا مَا سِوَى ذٰلِكَ</مقطع>
    <مقطع هوية='٨٩٩١٧'>فَلَا يُعْلَمُ إِلَّا بِالسَّمْعِ ثُمَّ تَطْلُبُ النَّظَاْئِرَ</مقطع>
    <مقطع هوية='٩٤٤٥٥'>كَمَا أَنَّكَ تَطْلُبُ نَظَاْئِرَ الْأَفْعَاْلِ هَا هُنَا</مقطع>
    <مقطع هوية='٧٢٩٧٢'>فَتَجْعَلُ نَظِيْرَ <حرف>الْأَزْنَاْدِ</حرف>  قَوْلَ الشَّاْعِرِ وَهُوَ الْأَعْشَى</مقطع>
    <شاهدة هوية='٤٧١٧٥' شاعر="الْأَعْشَى">
      <بيت>
        <مصراع>إِذَا رَوَّحَ الرَّاْعِي اللِّقَاْحَ مُعَزِّبًا</مصراع>
        <مصراع>وَأَمْسَتْ عَلَى آنَاْفِهَا عَبَرَاْتُهَا</مصراع>
      </بيت>
    </شاهدة>
    <مقطع هوية='٠٢١٨٠'>وَقَدْ يَجِيْءُ  <حرف>خَمْسَةُ كِلَاْبٍ</حرف></مقطع>
    <مقطع هوية='٢٣٩٦٩'>يُرَاْدُ بِهِ <حرف>خَمْسَةٌ مِنَ الْكِلَاْبِ</حرف></مقطع>
    <مقطع هوية='٥٧٩١٦'>كَمَا تَقُوْلُ <قول هوية='١١٩١٧'>هٰذَا صَوْتُ كِلَاْبٍ</قول></مقطع>
    <مقطع هوية='٠١٥١٠'>أَيْ <حرف>هٰذَا مِنْ هٰذَا الْجِنْسِ</حرف></مقطع>
    <مقطع هوية='١٥٩٨١'>وَكَمَا تَقُوْلُ <قول هوية='٢٢٥٠٩'>هٰذَا حَبُّ رُمَّاْنٍ</قول></مقطع>
    <مقطع هوية='٩٧٠٨٦'>وَقَاْلَ الرَّاْجِزُ</مقطع>
    <شاهدة هوية='١٧٨٦٥' شاعر="خطام المجاشعي">
      <بيت>
        <مصراع>كَأَنَّ خُصْيَيْهِ مِنَ التَّدَلْدُلِ</مصراع>
        <مصراع>ظَرْفُ عَجُوْزٍ فِيْهِ ثِنْتَا حَنْظَلِ</مصراع>
      </بيت>
    </شاهدة>
    <مقطع هوية='١٧٨٨٢'>وَقَاْلَ الْآخَرُ</مقطع>
    <شاهدة هوية='٤١١٩٧'>
      <بيت>
        <مصراع>قَدْ جَعَلَتْ مَيُّ عَلَى الظِّرَاْرِ</مصراع>
        <مصراع>خَمْسَ بَنَاْتٍ قَاْنِيءِ الْأَظْفَاْرِ</مصراع>
      </بيت>
    </شاهدة>
  </قسم>
  <قسم هوية='٢٥٥٩٣' قطع="صفحة">
    <عنوان>بَاْبُ فَعَل</عنوان>
    <مقطع هوية='٤٣٧٨١'>وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فَعَلًا</مثال></مقطع>
    <مقطع هوية='١٠٣٥١'>فَإِنَّكَ إِذَا كَسَّرْتَهُ لِأَدْنَى الْعَدَدِ بَنَيْتَهُ عَلَى <مثال>أَفْعَاْلٍ</مثال></مقطع>
    <مقطع هوية='٨٠٢٢٧'>وَذٰلِكَ قَوْلُكَ <اسم>جَمَلٌ</اسم> وَ<اسم عدد="ق">أَجْمَاْلٌ</اسم>
    </مقطع>
    <مقطع هوية='٠٩٠٤٧'>وَ<اسم>جَبَلٌ</اسم> وَ<اسم عدد="ق">أَجْبَاْلٌ</اسم>
    </مقطع>
    <مقطع هوية='١٥٣٠٣'>وَ<اسم>أَسَدٌ</اسم> وَ<اسم عدد="ق">آسَاْدٌ</اسم>
    </مقطع>
    <مقطع هوية='٤٩٠٩٢'>فَإِذَا جَاْوَزُوْا بِهِ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع هوية='٠٠٤٩٣'>فَإِنَّهُ يَجِيْءُ عَلَى <مثال>فِعَاْلٍ</مثال> وَ<مثال>فُعُوْلٍ</مثال></مقطع>
    <مقطع هوية='٦٨٧٨٦'>فَأَمَّا الْـ<مثال>فِعَاْلُ</مثال> فَنَحْوُ <اسم عدد="ك">جِمَاْلٍ</اسم> وَ<اسم عدد="ك">جِبَاْلٍ</اسم>
    </مقطع>
    <مقطع هوية='٨٣٢٠٨'>وَأَمَّا الْـ<مثال>فُعُوْلُ</مثال> فَنَحْوُ <اسم عدد="ك">أُسُوْدٍ</اسم> وَ<اسم عدد="ك">ذُكُوْرٍ</اسم>
    </مقطع>
    <مقطع هوية='٣٩٥٢٤'>وَالْـ<مثال>فِعَاْلُ</مثال> فِي هٰذَا أَكْثَرُ</مقطع>
    <مقطع هوية='١٦١٤٧'>وَقَدْ يَجِيْءُ إِذَا جَاوَزُوا بِهِ أَدْنَى الْعَدَدِ عَلَى <مثال>فُعْلَاْنٍ</مثال> وَ<مثال>فِعْلَاْنٍ</مثال>
    </مقطع>
    <مقطع هوية='٦٦٢٩٤'>فَأَمَّا <مثال>فِعْلَاْنٌ</مثال> نَحْوُ <اسم عدد="ك">خِرْبَاْنٍ</اسم> وَ<اسم عدد="ك">بِرْقَاْنٍ</اسم> وَ<اسم عدد="ك">وِرْلَاْنٍ</اسم>
    </مقطع>
    <مقطع هوية='١٨٧٣٠'>وَأَمَّا <مثال>فُعْلَاْنٌ</مثال> فَنَحْوُ <اسم عدد="ك">حُمْلَاْنٍ</اسم> وَ<اسم عدد="ك">سُلْقَاْنٍ</اسم>
    </مقطع>
    <مقطع هوية='٧٩٢٤٩'>فَإِذَا لَمْ تُجَاْوِزْ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع هوية='٢٥٢١٣'>قُلْتَ <اسم عدد="ق">أَبْرَاْقٌ</اسم> وَ<اسم عدد="ق">أَحْمَاْلٌ</اسم> وَ<اسم عدد="ق">أَوْرَاْلٌ</اسم> وَ<اسم عدد="ق">أَخْرَاْبٌ</اسم> وَ<اسم>سَلْقٌ</اسم> وَ<اسم عدد="ق">أَسْلَاْقٌ</اسم>
    </مقطع>
    <مقطع هوية='٤٢٢٤٩'>وَرُبَّمَا جَاْءَ الـ<مثال>أَفْعَاْلُ</مثال></مقطع>
    <مقطع هوية='٦٨٢٤٥'>يُسْتَغْنَى بِهِ أَنْ يُكَسَّرَ الِٱسْمُ عَلَى الْبِنَاْءِ الَّذِي هُوَ لأَكْثَرِ الْعَدَدِ</مقطع>
    <مقطع هوية='٧١٣٢٣'>فَيُعْنَى بِهِ مَا عُنِيَ بِذٰلِكَ الْبِنَاْءِ مِنَ الْعَدَدِ</مقطع>
    <مقطع هوية='٠٧٧٦١'>وَذٰلِكَ نَحْوُ <اسم>قَتَبٍ</اسم> وَ<اسم عدد="ك">أَقْتَاْبٍ</اسم> وَ<اسم>رَسَنٍ</اسم> وَ<اسم عدد="ك">أَرْسَاْنٍ</اسم></مقطع>
    <مقطع هوية='١٣٠٢٢'>وَنَظِيْرُ ذٰلِكَ مِنْ بَاْبِ الْـ<مثال>فَعْلِ</مثال>
    <اسم>الْأُكُفِّ</اسم> وَ<اسم عدد="ك">الْأَرْآدِ</اسم></مقطع>
    <مقطع هوية='١٢٧٣٩'>وَقَدْ يَجِيْء الْـ<مثال>فَعْلُ</مثال>
    <مثال>فُعْلَاْنًا</مثال>
    </مقطع>
    <مقطع هوية='٦٠٤٣٣'>وَذٰلِكَ قَوْلُكَ <اسم>ثَغْبٌ</اسم> وَ<اسم عدد="ك">ثُغْبَاْنٌ</اسم> وَالثَّغْبُ الْغَدِيْرُ</مقطع>
    <مقطع هوية='٨٠٤٠٠'>وَ<اسم>بَطْنٌ</اسم> وَ<اسم عدد="ك">بُطْنِاْنٌ</اسم> وَ<اسم>ظَهْرٌ</اسم> وَ<اسم عدد="ك">ظُهْرَاْنٌ</اسم>
    </مقطع>
    <مقطع هوية='٤٥٤٦٧'>وَقَدْ يَجِيْء عَلَى <مثال>فِعْلاْنٍ</مثال> وَهُوَ أَقَلُّهُمَا</مقطع>
    <مقطع هوية='٠٤٨٢٠'>نَحْوُ <اسم>حَجْلٍ</اسم> وَ<اسم عدد="ك">حِجْلَاْنٍ</اسم></مقطع>
    <مقطع هوية='١٨٤٤٠'>وَ<اسم>رَأَلٍ</اسم> وَ<اسم عدد="ك">رِئْلَاْنٍ</اسم></مقطع>
    <مقطع هوية='٦٩٠٢٥'>وَ<اسم>جَحْشٍ</اسم> وَ<اسم عدد="ك">جِحْشَاْنٍ</اسم></مقطع>
    <مقطع هوية='٦٩٠٨٩'>وَ<اسم>عَبْدٍ</اسم> وَ<اسم عدد="ك">عِبْدَاْنٍ</اسم></مقطع>
    <مقطع هوية='١٢٩٥٤'>وَقَدْ يُلْحِقُوْنَ الْـ<مثال>فِعَاْلَ</مثال> الْهَاْءَ</مقطع>
    <مقطع هوية='٥١١٣٨'>كَمَا أَلْحَقُوْا الْـ<مثال>فِعَاْلَ</مثال> الَّتِي فِي الْـ<مثال>فَعْلِ</مثال></مقطع>
    <مقطع هوية='٥٩٥٥٥'>وَذٰلِكَ قَوْلُهُمْ فِي <اسم>جَمَلٍ</اسم> <اسم عدد="ك">جِمَاْلَةٌ</اسم></مقطع>
    <مقطع هوية='٠٣٨٢٣'>وَ<اسم>حَجَرٍ</اسم> <اسم عدد="ك">حِجَاْرَةٌ</اسم></مقطع>
    <مقطع هوية='١٤٢٧٣'>وَ<اسم>ذِكْرٍ</اسم> <اسم عدد="ك">ذِكَاْرَةٌ</اسم></مقطع>
    <مقطع هوية='٨٣٩٣٥'>وَذٰلِكَ قَلِيْلٌ وَالْقِيَاْسُ عَلَى مَا ذَكَرْنَا</مقطع>

    <مقطع هوية='٦٦٩٦٥'>وَقَدْ كُسِّرَ عَلَى <مثال>فُعْلٍ</مثال> وَذٰلِكَ قَلِيْلٌ</مقطع>
    <مقطع هوية='٣٣٧٧٩'>كَمَا أَنَّ <مثال>فِعَلَةً</مثال> فِي بَاْبِ <مثال>فَعْلٍ</مثال> قَلِيْلٌ</مقطع>
    <مقطع هوية='٢٨٣٦١'>وَذٰلِكَ نَحْوُ <اسم>أَسَدٍ</اسم> وَ<اسم عدد="ك">أُسْدٍ</اسم></مقطع>
    <مقطع هوية='٢٦٩٦٢'>وَ<اسم>وَثَنٍ</اسم> وَ<اسم عدد="ك">وُثْنٍ</اسم></مقطع>
    <مقطع هوية='٩٣٩١٢'>بَلَغَنَا أَنَّهَا قِرَاْءَةٌ</مقطع>
    <مقطع هوية='٨٧٦٩٦'>وَبَلَغَنِي أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <اسم>نَصَفٌ</اسم> وَ<اسم عدد="ك">نُصْفٌ</اسم></مقطع>
    <مقطع هوية='٢٦٨٥٨'>وَرُبَّمَا كَسَّرُوا <مثال>فَعَلًا</مثال> عَلَى <مثال>أَفْعُلٍ</مثال></مقطع>
    <مقطع هوية='٢٨٧٢٨'>كَمَا كَسَّرُوْا <مثال>فَعْلًا</مثال> عَلَى <مثال>أَفْعَاْلٍ</مثال></مقطع>
    <مقطع هوية='٩٩٤٦٧'>وَذٰلِكَ قَوْلُكَ <اسم>زَمَنٌ</اسم> وَ<اسم عدد="ك">أَزْمُنٌ</اسم></مقطع>
    <مقطع هوية='٢٩٢٨٧'>وَبَلَغَنَا أَنَّ بَعْضَهُمْ يَقُوْلُ <اسم>جَبَلٌ</اسم> وَ<اسم عدد="ق">أَجْبُلٌ</اسم></مقطع>
    <مقطع هوية='٥٥٢٥٥'>وَقَاْلَ الشَّاْعِرُ وَهُوَ ذُو الرُّمَّةِ</مقطع>
    <شاهدة هوية='٨٥٥٣٣' شاعر="ذُو الرُّمَّةِ">
      <بيت>
        <مصراع>أَمَنْزِلَتَيْ مَيٍّ سَلَاْمٌ عَلَيْكُمَا</مصراع>
        <مصراع>هَلِ الأَزْمُنُ اللَّائِي مَضَيْنَ رَوَاْجِعُ</مصراع>
      </بيت>
    </شاهدة>

    <مقطع هوية='٨٢٢٦٢'>وَبَنَاْتُ الْيَاْءِ وَالْوَاْوِ تُجْرَى هٰذَا الْمَجْرَى</مقطع>
    <مقطع هوية='٤٦٩٢١'>قَاْلُوْا <اسم>قَفًا</اسم> وَ<اسم عدد="ك">أَقْفَاْءٌ</اسم> وَ<اسم عدد="ك">قُفِيٌّ</اسم></مقطع>
    <مقطع هوية='١٣٢٥١'>وَ<اسم>عَصًى</اسم> [<اسم>عَصًا</اسم>] وَ<اسم عدد="ك">عُصِيٌّ</اسم></مقطع>
    <مقطع هوية='٠٥٤٣٦'>وَ<اسم>صَفًا</اسم> وَ<اسم عدد="ك">أَصْفَاْءٌ</اسم> وَ<اسم عدد="ك">صُفِيٌّ</اسم></مقطع>
    <مقطع هوية='١٢١٥٠'>كَمَا قَاْلُوْا <اسم عدد="ك">آسَاْدٌ</اسم> وَ<اسم عدد="ك">أَسُوْدٌ</اسم></مقطع>
    <مقطع هوية='٦٧٦٩٩'>وَ<اسم عدد="ك">أَشْعَاْرٌ</اسم> وَ<اسم عدد="ك">شُعُوْرٌ</اسم></مقطع>
    <مقطع هوية='٥٨٢٤٦'>وَقَاْلُوْا <اسم>رَحًى</اسم> وَ<اسم عدد="ك">أَرْحَاْءٌ</اسم> فَلَمْ يُكَسِّرُوْهَا عَلَى غَيْرِ ذٰلِكَ</مقطع>
    <مقطع هوية='٠١٧٥١'>كَمَا لَمْ يُكَسِّرُوْا <اسم عدد="ك">الْأَرْسَاْنَ</اسم> وَ<اسم عدد="ك">الْأَقْدَاْمَ</اسم> عَلَى غَيْرِ ذٰلِكَ</مقطع>
    <مقطع هوية='٥٩٩٢١'>وَلَوْ فَعَلُوْا كَاْنَ قِيَاْسًا وَلٰكِنِّي لَمْ أَسْمَعْهُ</مقطع>
    <مقطع هوية='٦٣٦٩١'>وَقَاْلُوْا <اسم>عَصًى</اسم> وَ<اسم عدد="ك">أُعْصٍ</اسم> كَمَا قَاْلُوْا <اسم عدد="ك">أَزْمُنٌ</اسم></مقطع>
    <مقطع هوية='٩٤١٦٥'>وَقَاْلُوْا <اسم عدد="ك">عُصِيٌّ</اسم> كَمَا قَاْلُوْا <اسم عدد="ك">أُسُوْدٌ</اسم></مقطع>
    <مقطع هوية='٢٤٢٧٨'>وَلَا نَعْلَمُهُمْ قَاْلُوْا <اسم عدد="ك">أَعْصَاْءُ</اسم> جَعَلُوْا <اسم عدد="ك">أُعْصٍ</اسم> بَدَلًا مِنْ <اسم عدد="ك">أَعْصَاْءٍ</اسم></مقطع>
    <مقطع هوية='٣٤٧٣٣'>جَعَلُوْا هٰذَا بَدَلًا مِنْهُا</مقطع>
    <مقطع هوية='٩٦٩٧٢'>وَتَقُوْلُ فِي الْمُضَاْعَفِ <اسم>لَبَبٌ</اسم> وَ<اسم عدد="ك">أَلْبَاْبٌ</اسم></مقطع>
    <مقطع هوية='٤٢٩٠٧'>وَ<اسم>مَدَدٌ</اسم> وَ<اسم عدد="ك">أَمْدَاْدٌ</اسم></مقطع>
    <مقطع هوية='٣٨٧٥٣'>وَ<اسم>فَنَنٌ</اسم> وَ<اسم عدد="ك">أَفْنَاْنٌ</اسم></مقطع>
    <مقطع هوية='٦٦٠٣٧'>وَلَمْ يُجَاوِزُوا الـ<مثال>أَفْعَاْلَ</مثال></مقطع>
    <مقطع هوية='٣٥٨٠٩'>كَمَا لَمْ يُجَاوِزُوا الْـ<اسم>أَقْدَاْمَ</اسم> وَالْـ<اسم>أَرْسَاْنَ</اسم> وَالْـ<اسم>أَغْلَاْقَ</اسم></مقطع>
    <مقطع هوية='٦١٠٣٣'>وَالثَّبَاْتُ فِي بَاْبِ <مثال>فَعَلٍ</مثال> عَلَى الـ<مثال>أَفْعَاْلِ</مثال> أَكْثَرُ مِنَ الثَّبَاْتِ فِي بَاْبِ <مثال>فَعْلٍ</مثال> عَلَى الـ<مثال>أَفْعُلِ</مثال>
    </مقطع>
    <مقطع هوية='٠٤١٦٩'>فَإِنْ بُنِيَ الْمُضَاْعَفُ عَلَى <مثال>فِعَاْلٍ</مثال> أَوْ <مثال>فُعُوْلٍ</مثال> أَوْ <مثال>فِعْلَاْنٍ</مثال> أَوْ <مثال>فُعْلَاْنٍ</مثال></مقطع>
    <مقطع هوية='١٠٢٨٥'>فَهُوَ الْقِيَاْسُ عَلَى مَا ذَكَرْنَا</مقطع>
    <مقطع هوية='٦٢٠٠٤'>كَمَا جَاْءَ الْمُضَاْعَفُ فِي بَاْبِ <مثال>فَعْلٍ</مثال> عَلَى قِيَاْسِ غَيْرِ الْمُضَاْعَفِ</مقطع>
    <مقطع هوية='٣٦٧٣٥'>فَكُلُّ شَيْءٍ دَخَلَ الْمُضَاْعَفَ مِمَّا دَخَلَ الْأَوَّلَ فَهُوَ لَهُ نَظِيْرٌ</مقطع>
    <مقطع هوية='٤٩٣٣٨'>وَقَاْلُوْا الْـ<اسم عدد="ك">حِجَاْرُ</اسم> فَجَاْءَوْا بِهِ عَلَى الْأَكْثَرِ وَالْأَقْيَسِ وَهُوَ فِي الْكَلَامِ قَلِيْلٌ</مقطع>
    <مقطع هوية='٣٣٥٦٤'>قَاْلَ الشَّاْعِرُ</مقطع>
    <شاهدة هوية='٧٤٤١٢'>
      <بيت>
        <مصراع>كَأَنَّهَا مِنْ حِجاْرِ الْغِيْلِ أَلَبَسَها</مصراع>
        <مصراع>مَضاْرِبُ الْماْءِ لَوْنَ الطُّحْلُبِ اللَّزِبِ</مصراع>
      </بيت>
    </شاهدة>
  </قسم>

  <قسم هوية='٥٩٧٤٥'>
    <عنوان>بَاْبُ فَعِل</عنوان>
    <مقطع هوية='٥٧٠٢٠'>وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فَعِلًا</مثال></مقطع>
    <مقطع هوية='٥١٦٠٥'>فَإِنَّمَا تُكَسِّرُهُ مِنْ أَبْنِيَةِ أَدْنَى الْعَدَدِ عَلَى <مثال>أَفْعَاْلٍ</مثال></مقطع>
    <مقطع هوية='٨٤٥٤٠'>وَذٰلِكَ نَحْوُ <اسم>كَتِفٍ</اسم> وَ<اسم عدد="ق">أَكْتَاْفٍ</اسم></مقطع>
    <مقطع هوية='٠٠٢٤١'>وَ<اسم>كَبِدٍ</اسم> وَ<اسم عدد="ق">أَكْبَاْدٍ</اسم></مقطع>
    <مقطع هوية='٣٩٥٧١'>وَ<اسم>فَخِذٍ</اسم> وَ<اسم عدد="ق">أَفْخَاْذٍ</اسم></مقطع>
    <مقطع هوية='١٦٣٢٩'>وَ<اسم>نَمِرٍ</اسم> وَ<اسم عدد="ق">أَنْمَاْرٍ</اسم></مقطع>
    <مقطع هوية='٩١١٢٦'>وَقَلَّمَا يُجَاْوِزُوْنَ بِهِ لِأَنَّ هٰذَا الْبِنَاْءَ نَحْوُ <اسم>كَتِفٍ</اسم> أَقَلَّ مِنْ <مثال>فَعْلٍ</مثال> بِكَثِيْرٍ</مقطع>
    <مقطع هوية='٤٣٨٩٦'>كَمَا أَنَّ <مثال>فَعَلًا</مثال> أَقَلُّ مِنْ <مثال>فَعْلٍ</مثال></مقطع>
    <مقطع هوية='٤٧١١٠'>أَلَا تَرَى أَنَّ مَا لَزِمَ مِنْهُ بِنَاْءَ الْأَقَلِّ أَكْثَرُ</مقطع>
    <مقطع هوية='٤٠٤٧٧'>فَلَمْ يُفْعَلْ بِهِ مَا فُعِلَ بِـ<مثال>فَعَلٍٍ</مثال> إذْ لَمْ يَكُنْ كَثِيْرًا مِثْلَهُ</مقطع>
    <مقطع هوية='٢٠٩٧٥'>كَمَا لَمْ يَجِئْ فِي مُضَاْعَفِ <مثال>فَعَلٍ</مثال> مَا جَاْءَ فِي مُضَاْعَفِ <مثال>فَعْلٍ</مثال> لِقِلَّتِهِ</مقطع>
    <مقطع هوية='٦٣٤٧٩'>وَلَمْ يَجِئْ فِي بَنَاْتِ الْيَاْءِ وَالْوَاْوِ مِنْ <مثال>فَعِلٍ</مثال> جَمِيْعُ مَا جَاْءَ مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ مِنْ <مثال>فَعَلٍ</مثال> لِقِلَّتِهَا</مقطع>
    <مقطع هوية='١٧١٩١'>وَهِيَ عَلَى ذٰلِكَ أَكْثَرُ مِنَ الْمُضَاْعَفِ</مقطع>
    <مقطع هوية='٣١٨٥٦'>وَذٰلِكَ أَنَّ <مثال>فَعَلًا</مثال> أَكْثَرُ مِنْ <مثال>فَعِلٍ</مثال>
    </مقطع>
    <مقطع هوية='٨٧٩٠٣'>وَقَدْ قَاْلُوْا <اسم عدد="ك">النُّمُوْرُ</اسم> وَ<اسم عدد="ك">الْوُعُوْلُ</اسم>
    </مقطع>
    <مقطع هوية='١١٩٨٧'>شَبَّهُوْهَا بِـ<اسم عدد="ك">الْأُسُوْدِ</اسم>
    </مقطع>
    <مقطع هوية='٩٣٨٣٨'>وَهٰذَا النَحْوُ قَلِيْلٌ</مقطع>
    <مقطع هوية='٤٧٦٩٩'>فَلَمَّا جَاْزَ لَهُمْ أَنْ يُثْبِتُوْا فِي الْأَكْثَرِ عَلَى <مثال>أَفْعَاْلٍ</مثال> كَاْنَوْا لَهُ فِي الْأَقَلِّ أَلْزَمَ</مقطع>
  </قسم>

