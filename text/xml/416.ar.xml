  <قسم هوية='٨٩١٨٣'>
    <عنوان>بَاْبُ فِعَل</عنوان>
    <مقطع هوية='٠٩٠٣٤'>وَمَا كَاْبنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فِعَلًا</مثال> فَهُوَ بِمَنْزِلَةِ الْـ<مثال>فَعِلِ</مثال> وَهُوَ أَقَلُّ</مقطع>
    <مقطع هوية='٧٠٥٠٠'>وَذٰلِكَ قَوْلُكَ <اسم>قِمَعٌ</اسم> وَ<اسم عدد="ك">أَقْمَاْعٌ</اسم></مقطع>
    <مقطع هوية='٧٦١١٤'>وَ<اسم>مِعًا</اسم> وَ<اسم عدد="ك">أَمْعَاْءٌ</اسم></مقطع>
    <مقطع هوية='٧٧٣٩٩'>وَ<اسم>عِنَبٌ</اسم> وَ<اسم عدد="ك">أَعْنَاْبٌ</اسم></مقطع>
    <مقطع هوية='٣٩٣٢٠'>وَ<اسم>ضِلَعٌ</اسم> وَ<اسم عدد="ك">أَضْلَاْعٌ</اسم></مقطع>
    <مقطع هوية='٠٥٩٤٧'>وَ<اسم>إِرَمٌ</اسم> وَ<اسم عدد="ك">آرَاْمٌ</اسم></مقطع>
    <مقطع هوية='٦٤١٦٣'>وَقَدْ قَاْلُوْا الـ<اسم عدد="ك">ضُّلُوْعُ</اسم> وَالْـ<اسم عدد="ك">أُرُوْمُ</اسم></مقطع>
    <مقطع هوية='٠٠١٢٣'>كَمَا قَاْلُوْا الـ<اسم عدد="ك">نُّمُوْرُ</اسم></مقطع>
    <مقطع هوية='٠١٥٠٩'>وَقَدْ قَاْلَ بَعْضُهُمْ الـ<اسم عدد="ك">أَضْلُعِ</اسم> شَبَّهَهَا بِالـ<اسم عدد="ك">أَزْمُنِ</اسم></مقطع>
  </قسم>

  <قسم هوية='٣٢٩٦١'>
    <عنوان>بَاْبُ فَعُل</عنوان>
    <مقطع هوية='٧٨٠٣٨'>وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فَعُلًا</مثال></مقطع>
    <مقطع هوية='٩٠٨٢٨'>فهُوَ كـ<مثال>فِعَلٍ</مثال> وَ<مثال>فَعِلٍ</مثال> وَهُوَ أَقَلُّ فِي الْكَلَاْمِ مِنْهُمَا</مقطع>
    <مقطع هوية='٧٥٠٦٦'>وَذٰلِكَ قَوْلُكَ <اسم>عَجُزٌ</اسم> وَ<اسم عدد="ك">أَعْجَاْزٌ</اسم></مقطع>
    <مقطع هوية='٧٠٥٥٢'>وَ<اسم>عَضُدٌ</اسم> وَ<اسم عدد="ك">أَعْضَاْدٌ</اسم></مقطع>
    <مقطع هوية='٢٢٩٨١'>وَقَدْ بُنِيَ عَلَى <مثال>فِعَاْلٍ</مثال> قَاْلُوْا <اسم عدد="ك">أَرْجُلٌ</اسم> وَ<اسم عدد="ك">رِجَاْلٌ</اسم></مقطع>
    <مقطع هوية='٠٢٥٨٣'>وَ<اسم>سَبُعٌ</اسم> وَ<اسم عدد="ك">سِبَاْعٌ</اسم></مقطع>
    <مقطع هوية='٣٦٧٠٠'>جَاْءُوا بِهِ عَلَى <مثال>فَعَاْلٍ</مثال> كَمَا جَاْءُوا بالـ<اسم عدد="ك">ضُّلُوْعِ</اسم> عَلَى <مثال>فُعُوْلٍ</مثال></مقطع>
    <مقطع هوية='٩٤٤٩٦'>وَ<مثال>فِعَاْلٌ</مثال> وَ<مثال>فُعُوْلٌ</مثال> أُخْتَاْنِ</مقطع>
    <مقطع هوية='١٨٦٤٠'>وَجَعَلُوْا أَمْثِلَتَهُ عَلَى  بِنَاْءٍ لَمْ يُكَسَّرْ عَلَيْهِ وَاْحِدُهُ</مقطع>
    <مقطع هوية='٤٩٠١٢'>وَذٰلِكَ قَوْلُهُمْ <حرف>ثَلَاْثَةُ رَجْلَةٍ</حرف> وَاسْتَغْنَوْا بِهَا عَنْ <حرف>أَرْجَاْلٍ</حرف></مقطع>
  </قسم>

  <قسم هوية='٠٠٧٤٩' قطع="صفحة">
    <عنوان>بَاْبُ فُعُل</عنوان>
    <مقطع هوية='٨٠٧٢٧'>وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فُعُلًا</مثال></مقطع>
    <مقطع هوية='٦١٣٦١'>فَهُوَ بِمَنْزِلَةِ الْـ<مثال>فَعُلِ</مثال> لِأَنَّهُ قَلِيْلٌ مِثْلُهُ</مقطع>
    <مقطع هوية='٤٤٣٦٦'>وَهُوَ قَوْلُكَ <اسم>عُنُقٌ</اسم> وَ<اسم عدد="ك">أَعْنَاْقٌ</اسم></مقطع>
    <مقطع هوية='٣٦١٦٢'>وَ<اسم>طُنُبٌ</اسم> وَ<اسم عدد="ك">أَطْنَاْبٌ</اسم></مقطع>
    <مقطع هوية='٥٢٦٢٩'>وَ<اسم>أُذُنٌ</اسم> وَ<اسم عدد="ك">آذَاْنٌ</اسم></مقطع>
  </قسم>

  <قسم هوية='٢١١٠٠'>
    <عنوان>بَاْبُ فُعَل</عنوان>
    <مقطع هوية='٨٢٤٦٦'>وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فُعَلًا</مثال></مقطع>
    <مقطع هوية='٨٥٨٠٧'>فَإِنَّ الْعَرَبَ تُكَسِّرُهُ عَلَى <مثال>فِعْلانٍ</مثال></مقطع>
    <مقطع هوية='٣٤٤٦١'>وَإِنْ أَرَاْدُوا أَدْنَى الْعَدَدِ لَمْ يُجَاوِزُوْهُ وَاسْتَغْنَوْا بِهِ</مقطع>
    <مقطع هوية='٧٠٨٢٥'>كَمَا اسْتَغْنَوْا بِـ<مثال>أَفْعُلٍ</مثال> وَ<مثال>أَفْعَاْلٍ</مثال> فِيْمَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع هوية='٦٦٤٤٣'>فَلَمْ يُجَاوِزُوْهُ فِي الْقَلِيْلِ وَالْكَثِيْرِ</مقطع>
    <مقطع هوية='٢٦٤١٦'>وَذٰلِكَ قَوْلُكَ <اسم>صُرَدٌ</اسم> وَ<اسم عدد="ك">صِرْدَاْنٌ</اسم></مقطع>
    <مقطع هوية='٤٣٨٩٤'>وَ<اسم>نُغَرٌ</اسم> وَ<اسم عدد="ك">نِغْرَاْنٌ</اسم></مقطع>
    <مقطع هوية='٥١٢٢٢'>وَ<اسم>جُعَلٌ</اسم> وَ<اسم عدد="ك">جِعْلَاْنٌ</اسم></مقطع>
    <مقطع هوية='١٠٦٤٤'>وَ<اسم>خُزَزٌ</اسم> وَ<اسم عدد="ك">خِزَّاْنٌ</اسم></مقطع>
    <مقطع هوية='٣٨٠٥١'>وَقَدْ أَجْرَتِ الْعَرَبُ شَيْئًا مِنْهُ مَجْرَى <مثال>فَعَلٍ</مثال></مقطع>
    <مقطع هوية='١٩٣٤١'>وَهُوَ قَوْلُهُمْ <اسم>رُبَعٌ</اسم> وَ<اسم عدد="ك">أَرْبَاْعٌ</اسم></مقطع>
    <مقطع هوية='٧٤٧١٤'>وَ<اسم>رُطَبٌ</اسم> وَ<اسم عدد="ك">أَرْطَاْبٌ</اسم></مقطع>
    <مقطع هوية='٧٢٣٦١'>كَقَوْلِكَ <اسم>جَمَلٌ</اسم> وَ<اسم عدد="ك">أَجْمَاْلٌ</اسم></مقطع>
  </قسم>

  <قسم هوية='٠٤٦٧٠'>
    <عنوان>بَاْبُ فِعِل</عنوان>
    <مقطع هوية='٥٤٧٤٤'>وَقَدْ جَاْءَ مِنَ الْأَسْمَاْءِ ٱسْمٌ وَاْحِدٌ عَلَى <مثال>فِعِلٍ</مثال> لَمْ نَجِدْ مِثْلَهُ وَهُوَ <اسم>إِبِلٌ</اسم></مقطع>
    <مقطع هوية='١٣٤١٣'>وَقَاْلُوْا <اسم عدد="ك">آبَاْلٌ</اسم> كَمَا قَاْلُوْا <اسم عدد="ك">أَكْتَاْفٌ</اسم></مقطع>
    <مقطع هوية='٠٢٣٦٤'>فهٰذِهِ حَاْلُ مَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَتَحَرَّكَتْ حُرُوْفُهُ جُمَعَ</مقطع>
    <مقطع هوية='٨٩٩٠٢'>وَقَاْلَ الرَّاْجِزُ</مقطع>
    <شاهدة هوية='٨٦٠٣١'>
      <بيت>
        <مصراع>فِيْهَا عَيَايِيْلُ أُسُوْدٌ وَنُمُرْ</مصراع>
        <مصراع/>
      </بيت>
    </شاهدة>
    <مقطع هوية='٦٧٠٣٣'>فَفُعِلَ بِهِ مَا فُعِلَ بـ<حرف>الْأَسَدِ</حرف> حِيْنَ قَاْلَ <حرف>أُسْدٌ</حرف></مقطع>
  </قسم>

  <قسم هوية='٣٤٣٨١'>
    <عنوان>بَاْبُ فِعْل</عنوان>
    <مقطع هوية='٦١١٧٣'>وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فِعْلًا</مثال></مقطع>
    <مقطع هوية='٨٧٠٤٨'>فَإِنَّهُ إِذَا كُسِّرَ عَلَى مَا يَكُوْنُ لأَدْنَى الْعَدَدِ كُسِّرَ عَلَى <مثال>أَفْعَاْلٍ</مثال></مقطع>
    <مقطع هوية='٢٢٩٤٠'>وَيُجَاْوِزُوْنَ بِهِ بِنَاْءَ أَدْنَى الْعَدَدِ فَيُكَسِّرُ عَلَى <مثال>فُعُوْلٍ</مثال> وَ<مثال>فِعَاْلٍ</مثال></مقطع>
    <مقطع هوية='٩٣٧١٣'>وَالْفُعُوْلُ فِيْهِ أَكْثَرُ</مقطع>
    <مقطع هوية='٨٢٥٤٩'>فَمِنْ ذٰلِكَ قَوْلُهُمْ حِمْلٌ وَأَحْمَاْلٌ وَحُمُوْلٌ</مقطع>
    <مقطع هوية='٨٤٠٩١'>وَعِدْلٌ وَأَعْدَاْلٌ وَعُدُوْلٌ</مقطع>
    <مقطع هوية='٥٢٨٨٢'>وَجِذْعٌ وَأَجْذَاْعٌ وَجُذُوْعٌ</مقطع>
    <مقطع هوية='٥٤٥٢٠'>وَعِرْقٌ وَأَعْرَاْقٌ وَعُرُوْقٌ</مقطع>
    <مقطع هوية='٢٢٩٦١'>وَعِذْقُ وَأَعْذَاْقٌ وَعُذُوْقٌ</مقطع>
    <مقطع هوية='٥٣٦٧٥'>وَأَمَّا الْفِعَالُ فَنَحْوُ بِئْرٍ وَأَبَاْرٍ وَبِئَاْرٍ</مقطع>
    <مقطع هوية='٦٥٥٦٥'>وَذِئْبٍ وَذِئَاْبٍ</مقطع>
    <مقطع هوية='٣٣٣٨٥'>وَرُبَّمَا لَمْ يُجَاْوِزُوْا أَفْعَاْلًا فِي هٰذَا الْبِنَاْءِ</مقطع>
    <مقطع هوية='٢٣٤٤٧'>كَمَا لَمْ يُجَاْوِزُوْا الْأَفْعَلَ وَالْأَفْعَاْلَ فِيْمَا ذَكَرْنَا</مقطع>
    <مقطع هوية='٩٣٤٧٥'>وَذٰلِكَ نَحْوُ خِمْسٍ وَأَخْمَاْسٍ</مقطع>
    <مقطع هوية='٦٧٩٦٩'>وَسِتْرٍ وَأَسْتَاْرٍ</مقطع>
    <مقطع هوية='٥٩٠٥١'>وَشِبْرٍ وَأَشْبَاْرٍ</مقطع>
    <مقطع هوية='٦١٤٩٢'>وَطِمْرٍ وَأَطْمَاْرٍ</مقطع>

    <مقطع هوية='٠٢٨٤١'>وَقَدْ يُكَسَّرُ عَلَى فِعَلَةٍ</مقطع>
    <مقطع هوية='٧٣٦٢٦'>نَحْوُ قِرْدٍ وَقِرَدَةٍ</مقطع>
    <مقطع هوية='٠٠٤٨٤'>وَحِسْلٍ وَحِسَلَةٍ وَأَحْسَاْلٍ</مقطع>
    <مقطع هوية='٣٥٠٢٢'>إِذَا أَرَدْتَ بِنَاْءَ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع هوية='٣٠٥٢٩'>فَأَمَّا الْقِرَدَةُ فَاسْتُغْنِيَ بِهَا عَنْ أَقْرَاْدٍ</مقطع>
    <مقطع هوية='٩٧٩٠٠'>كَمَا قَاْلُوْا <حرف>ثَلَاْثَةُ شُسُوْعٍ</حرف> فَاْسْتَغْنَوْا بِهَا عَنْ <حرف>أَشْسَاْعٍ</حرف></مقطع>
    <مقطع هوية='٧٥٦٤٠'>وَقَاْلُوْا <حرف>ثَلَاْثَةُ قُرُوْءٍ</حرف> فَاْسْتَغْنَوْا بِهَا عَنْ <حرف>ثَلَاْثَة أَقْرُؤٍ</حرف></مقطع>
    <مقطع هوية='٣٥٣٠٤'>وَرُبَّمَا بُنِيَ فِعْلٌ عَلَى أَفْعُلٍ مِنْ أَبْنِيَةِ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع هوية='٩٥٤٦٥'>وَذٰلِكَ قَوْلُهُمْ ذِئْبٌ وَأَذْؤُبٌ</مقطع>
    <مقطع هوية='٤٠٧٨١'>وَقِطْعُ وَأَقْطُعٌ</مقطع>
    <مقطع هوية='٣٠١٧١'>وَجِرْوٌ وَأَجْرٍ وَقَاْلُوْا جِرَاْءٌ</مقطع>
    <مقطع هوية='٤٤٠٧٢'>كَمَا قَاْلُوْا ذِئَاْبٌ</مقطع>
    <مقطع هوية='٩٩١٣٢'>وَرِجْلٌ وَأَرْجُلٌ</مقطع>
    <مقطع هوية='٠٨٨٢٧'>إِلَّا أَنَّهُمْ لَا يُجَاْوِزُوْنَ الأَفْعَل كَمَا أَنَّهُمْ لَمْ يُجَاْوِزُوْا الْأَكُفَّ</مقطع>
    <مقطع هوية='٩٥١٩٩'>وَقِصَّةُ الْمُضَاْعَفِ هَاهُنَا وَبَنَاْتِ الْيَاْءِ وَالْوَاْوِ كَقِصَّتِهَا فِي بَاْبِ فِعْلٍ</مقطع>
    <مقطع هوية='٤٢٣٠٠'>قَاْلُوْا نِحْيٌ وَأَنْحَاْءٌ وَنِحَاْءٌ</مقطع>
    <مقطع هوية='٩٧٢٩٦'>كَمَا قَاْلُوْا أَبْآرٌ وَبِئَاْرٌ</مقطع>
    <مقطع هوية='٤٧٧٢٨'>وَقَاْلُوْا فِي جَمْعِ نِحْيٍ نُحِيٌّ</مقطع>
    <مقطع هوية='٣٠٨٨٠'>كَمَا قَاْلُوْا لِصٌّ وَلُصُوْصٌ</مقطع>
    <مقطع هوية='٩٠٨٣٢'>وَقَاْلُوْا فِي الذِّئْبِ ذُؤْبَاْنٌ جَعَلُوْهُ كَثَغْبٍ وَثُغْبَاْنٍ</مقطع>
    <مقطع هوية='٢٢٦٣٥'>وَقَاْلُوْا اللُّصُوْصُ فِي اللِّصِّ كَمَا قَاْلُوْا الْقُدُوْرُ فِي الْقِدْرِ وَأَقْدُرٌ حِيْنَ أَرَاْدُوْا بِنَاْءَ الأَقَلِّ</مقطع>
    <مقطع هوية='٦٥١٦٥'>وَكَمَا قَاْلُوْا فَرْخٌ وَأَفْرَاْخٌ وَفِرَاْخٌ</مقطع>
    <مقطع هوية='٩٥٠١٢'>قَاْلُوْا قِدْحٌ وَأَقْدَاْحٌ وَقِدَاْحٌ جَعَلُوْهُا كَفِعْلٍ</مقطع>
    <مقطع هوية='٣٧٨٩٤'>وَقَاْلُوْا رِئْدٌ وَرِئْدَاْنٌ</مقطع>
    <مقطع هوية='٤٤٧٣٥'>كَمَا قَاْلُوْا صِنْوٌ وَصِنْوَاْنٌ</مقطع>
    <مقطع هوية='٨٣٦٤٣'>وَقِنْوٌ وَقِنْوَاْنٌ</مقطع>
    <مقطع هوية='٧٦٧٨٣'>وَقَاْلَ بَعْضُهُمْ صُنْوَاْنٌ وَقُنْوَاْنٌ كَقَوْلِهِ ذُؤْبَاْنٌ</مقطع>
    <مقطع هوية='١٤٥٦٦'>وَالرِّئْدُ فَرْخُ الشِّجَرَةِ</مقطع>
    <مقطع هوية='٩٧٥١٠'>وَقَاْلُوْا شِقْذٌ وَشُقْذَاْنٌ وَالشِّقْذُ وَلَدُ الْحِرْبَاْءِ</مقطع>
    <مقطع هوية='٠٤٤٧٦'>وَقَاْلُوْا صِرْمٌ وَصُرْمَاْنٌ كَمَا قَاْلُوْا ذِئْبٌ وَذُؤْبَاْنٌ</مقطع>
    <مقطع هوية='٢٦٩٢١'>وَقَاْلُوْا ضِرْسٌ وَضَرِيْسٌ كَمَا قَاْلُوْا كَلِيْبٌ وَعَبِيْدٌ</مقطع>
    <مقطع هوية='٦٨٥٦٧'>وَقَاْلُوْا زِقٌّ وَزِقَاْقٌ وََأَزْقَاْقٌ</مقطع>
    <مقطع هوية='٢٧٧٨٧'>كَمَا قَاْلُوْا بِئْرٌ وَبِئَاْرٌ وَأَبْآرٌ</مقطع>
    <مقطع هوية='٨٩٤١٢'>وَقَاْلُوْا زُقَّاْنٌ كَمَا قَاْلُوْا ذُؤْبَاْنٌ</مقطع>
  </قسم>

  <قسم هوية='٧٤٦٨١'>
    <عنوان>بَاْبُ فُعْل</عنوان>
    <مقطع هوية='٩٤١٠٣'>وَأَمَّا مَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثال>فُعْلًا</مثال></مقطع>
    <مقطع هوية='٦٣١٥٨'>فَإِنَّهُ يُكَسَّرُ مِنْ أَبْنِيَةِ أَدْنَى الْعَدَدِ عَلَى أَفْعَاْلٍ</مقطع>
    <مقطع هوية='٨١٣٤٢'>وَقَدْ يُجَاْوِزُوْنَ بِهِ بِنَاْءَ أَدْنَى الْعَدَدِ فَيُكَسِّرُوْنَهُ عَلَى فُعُوْلٍ وَفَعَاْلٍ وَفَعُوْلٌ أَكْثَرُ</مقطع>
    <مقطع هوية='٧١١٩٢'>وَذٰلِكَ قَوْلُهُمْ جُنْدٌ وَأَجْنَاْدٌ وَجُنُوْدٌ</مقطع>
    <مقطع هوية='٤٨٩٢١'>وَبُرْدٌ وَأَبْرَاْدٌ وَبُرُوْدٌ</مقطع>
    <مقطع هوية='٦٧٨٠٩'>وَبُرْجٌ وَأَبْرَاْجٌ وَبُرُوْجٌ</مقطع>
    <مقطع هوية='٤٦١٧٧'>وَقَاْلُوا جُرْحٌ وَجُرُوْحٌ</مقطع>
    <مقطع هوية='٧٥٠٠٢'>وَلَمْ يَقُوْلُوْا أَجْرَاْحٌ كَمَا لَمْ يَقُوْلُوْا أَقْرَاْدٌ</مقطع>
    <مقطع هوية='٨٤٦٨٨'>وَأَمَّا الْفِعَاْلُ فَقَوْلُهُمْ جُمْدٌ وَأَجْمَاْدٌ وَجِمَادٌ</مقطع>
    <مقطع هوية='٧٤٥٨٣'>وَقُرْطٌ وَأَقْرَاْطٌ وَقِرَاْطٌ</مقطع>
    <مقطع هوية='٠١٠٣٣'>وَالْفِعَاْلُ فِي الْمُضَاعَفِ مِنْهُ كَثِيْرٌ</مقطع>
    <مقطع هوية='٦٣٥٥٣'>وَذٰلِكَ قَوْلُهُمْ أَخْصَاْصٌ وَخِصَاْصٌ</مقطع>
    <مقطع هوية='٦٦٢٣٠'>وَأَعْشَاْشٌ وَعِشَاْشٌ</مقطع>
    <مقطع هوية='٦٥٢٦١'>وَأَقْفَاْفٌ وَقِفَاْفٌ</مقطع>
    <مقطع هوية='٨٥٨٤٢'>وَأَخْفَاْفٌ وَخِفَاْفٌ</مقطع>
    <مقطع هوية='٥٥٦٥٤'>تُجْرِيْهِ مَجْرَى أَجْمَاْدٍ وَجِمَاْدٍ</مقطع>
    <مقطع هوية='٥٠٤٦٧'>وَقَدْ يَجِيْءُ إِذَا جَاْوَزَ بِنَاْءَ أَدْنَى الْعَدَدِ عَلَى فِعْلَةٍ</مقطع>
    <مقطع هوية='٠٦٨٧٦'>نَحْوَ جُحْرٍ وَأَجْحَاْرٍ وَجِحَرَةٍ</مقطع>
    <مقطع هوية='٢١٢٩٩'>قَاْلَ الشَّاْعِر</مقطع>
    <شاهدة هوية='١٨٥٦٧'>
      <بيت>
        <مصراع>كِراْمٌ حِيْنَ تَنْكَفِتُ الْأَفَاْعِي</مصراع>
        <مصراع>إِلَى أجْحَاْرِهِنَّ مِنَ الصَّقِيْعِ</مصراع>
      </بيت>
    </شاهدة>
    <مقطع هوية='٨٠٠٦٥'>نَظِيرُهُ مِنَ الْمَضَاْعَفِ حُبٌّ وَأَحْبَاْبٌ وَحِبَبَةٌ</مقطع>
    <مقطع هوية='٦٥٤٦٥'>نَحْوُ قُلْبٍ وَأَقْلَاْبٍ وَقِلَبَةٍ</مقطع>
    <مقطع هوية='٧٢١١٦'>وَخُرْجٌ وَخِرَجَةٌ</مقطع>
    <مقطع هوية='٢٤٦٤٥'>وَلَمْ يَقُوْلُوْا أَخْرَاْجٌ كَمَا لَمْ يَقُوْلُوْا أَجْرَاْحٌ</مقطع>
    <مقطع هوية='٨٨٦٩٦'>وَصُلْبٌ وَأَصْلَاْبٌ وَصِلَبَةٌ</مقطع>
    <مقطع هوية='٤٦٢٠١'>وَكُرْزٌ وَأَكْرَاْزٌ وَكِرَزَةٌ</مقطع>
    <مقطع هوية='٧٢٢٦٠'>وَهُوَ كَثِيْرٌ</مقطع>

    <مقطع هوية='٦٣٨٩٠'>وَرُبَّمَا اسْتُغْنِيَ بِأَفْعَاْلٍ فِي هٰذَا الْبَاْبِ فَلَمْ يُجَاْوِزْ</مقطع>
    <مقطع هوية='٦٩٥٧٤'>كَمَا كَانَ ذٰلِكَ فِي فَعْلٍ وَفَعَلٍ</مقطع>
    <مقطع هوية='٧٩٠٩٧'>وَذٰلِكَ نَحْوُ رُكْنٍ وَأَرْكَاْنٍ</مقطع>
    <مقطع هوية='٦٥٢٩٨'>وَجُزْءٍ وَأَجْزَاْءٍ</مقطع>
    <مقطع هوية='٠٣٧٤٥'>وَشُفْرٍ وَأَشْفَاْرٍ</مقطع>
    <مقطع هوية='٥٤٢٠٠'>وَأَمَّا بَنَاْتُ الْيَاْءِ وَالْوَاْوِ مِنْهُ فَقَلِيْلٌ</مقطع>
    <مقطع هوية='١٨١٠٨'>قَالُوْا مُدِيٌّ وَأَمْدَاْءٌ</مقطع>
    <مقطع هوية='٠٢١١٤'>لَا يُجَاْوِزُوْنَ وَذٰلِكَ لَقِلَّتِهِ فِي هٰذَا الْبَاْبِ</مقطع>
    <مقطع هوية='٤٢٥٩٧'>وَبَنَاْتُ الْيَاْءِ وَالْوَاْوِ فِيْهِ أَقَلُّ مِنْهَا فِي جَمِيْعِ مَا ذَكَرْنَا</مقطع>
    <مقطع هوية='٦٦٠٣٧'>وَقَدْ كُسِّرَ حَرْفٌ مِنْهُ عَلَى فُعْلٍ</مقطع>
    <مقطع هوية='٣٠١٥٠'>كَمَا كُسِّرَ عَلَيْهِ فَعَلٌ</مقطع>
    <مقطع هوية='٩٧٠٥٨'>وَذٰلِكَ قَوْلُكَ لِلْوَاْحِدِ <حرف>هُوَ الْفُلْكُ</حرف> فَتُذَكِّرُ وَلِلْجَمِيْعِ <حرف>هِيَ الْفُلْكُ</حرف></مقطع>
    <مقطع هوية='٦٩٤٥٣'>وَقَاْلَ اللهُ عَزَّ وَجَلَّ <آية هوية='٧٨٨١٦' سورة="٢٦" آية="١١٩">فِي ٱلْفُلْكِ ٱلْمَشْحُونِ</آية></مقطع>
    <مقطع هوية='٤٩٧٣٢'>فَلَمَّا جَمَعَ قَاْلَ <آية هوية='٤١٣٧١' سورة="٢" آية="١٦٤">وَالْفُلْكِ الَّتِي تَجْرِي فِي الْبَحْرِ</آية></مقطع>
    <مقطع هوية='٣٤٠١٣'>كَقَوْلِكَ أَسَدٌ وَأُسْدٌ</مقطع>
    <مقطع هوية=''>وَهٰذَا قَوْلُ الْخَلِيْلِ</مقطع>
    <مقطع هوية=''>وَمِثْلُهُ رَهْنٌ وَرُهْنٌ</مقطع>
    <مقطع هوية=''>وَقَاْلُوْا رُكْنٌ وَأَرْكُنٌ</مقطع>
    <مقطع هوية=''>وَقَاْلَ الرَّاْجِزُ وَهُوَ رُؤْبَةُ</مقطع>
    <شاهدة هوية='٠١٥٢٧' شاعر="رُؤْبَةُ">
      <بيت>
        <مصراع>وَزَحْمُ رُكْنَيْكَ شِدَاْدُ الْأَرْكُنِ</مصراع>
        <مصراع/>
      </بيت>
    </شاهدة>
    <مقطع هوية='٧٥٤٨١'>كَمَا قَاْلُوْا أَقْدُحٌ فِي الْقِدْحِ</مقطع>
    <مقطع هوية=''>وَقَاْلُوْا حُشٌ وَحِشَّاْنٌ وَحُشَّاْنٌ</مقطع>
    <مقطع هوية=''>كَقَوْلِهِمْ رِئْدٌ وَرِئْدَاْنٌ</مقطع>
  </قسم>

  <قسم هوية='٣١٧٠٤'>
    <عنوان>بَاْبُ فَعْلَة</عنوان>
    <مقطع هوية='٧٧٧٣٦'>وَأَمَّا مَا كَاْنَ عَلَى <مثال>فَعْلَةٍ</مثال></مقطع>
    <مقطع هوية=''>فَإِنَّكَ إِذَا أَرَدْتَ أَدْنَى الْعَدَدِ جَمَعْتَهَا بِالتَّاْءِ وَفَتَحْتَ الْعَيْنِ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ قَصْعَةٌ وَقَصَعَاْتٌ</مقطع>
    <مقطع هوية=''>وَصَحْفَةٌ وَصَحَفَاْتٌ</مقطع>
    <مقطع هوية=''>وَجَفْنَةٌ وَجَفَنَاْتٌ</مقطع>
    <مقطع هوية=''>وَشَفْرَةٌ وَشَفَرَاْتٌ</مقطع>
    <مقطع هوية=''>وَجَمْرَةٌ وَجَمَرَاْتٌ</مقطع>
    <مقطع هوية=''>فَإِذَا جَاوَزْتَ أَدْنَى الْعَدَدِ كَسَّرْتَ الِاسْمَ عَلَى فِعَاْلٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَصْعَةٌ وَقِصَاْعٌ</مقطع>
    <مقطع هوية=''>وَجَفْنَةٌ وَجِفَاْنٌ</مقطع>
    <مقطع هوية=''>وَشَفْرَةٌ وَشِفَاْرٌ</مقطع>
    <مقطع هوية=''>وَجَمْرَةٌ وَجِمَاْرٌ</مقطع>
    <مقطع هوية=''>وَقَدْ جَاْءَ عَلَى فُعُوْلٍ وَهُوَ قَلِيْلٌ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ بَدْرَةٌ وَبُدُوْرٌ</مقطع>
    <مقطع هوية=''>وَمَأْنَةٌ وَمُأُوْنٌ</مقطع>
    <مقطع هوية=''>فَأَدْخَلُوْاَ فُعُوْلًا فِي هٰذَا الْبَاْبِ لِأَنَّ فَعَاْلًا وَفُعُوْلًا أُخْتَاْنِ</مقطع>
    <مقطع هوية=''>فَأَدْخَلُوْهَا هٰهُنَا كَمَا دَخَلَت فِي بَاْبِ فِعْلٍ مَعَ فَعَاْلٍ</مقطع>
    <مقطع هوية=''>غَيْرَ أَنَّهُ فِي هٰذَا الْبَاْبِ قَلِيْلٌ</مقطع>
    <مقطع هوية=''>وَقَدْ يَجْمَعُوْنَ بِالتَّاْءِ وَهُمُ يُرِيْدُوْنَ الْكَثِيْرَ</مقطع>
    <مقطع هوية=''>وَقَاْلَ الشَّاْعِرُ وَهُوَ حَسَّاْنُ بْنُ ثَاْبِتٍ</مقطع>
    <شاهدة هوية='٣١٧٧٥' شاعر="حَسَّاْنُ بْنُ ثَاْبِتٍ">
      <بيت>
        <مصراع>لَنَا الْجَفَنَاْتُ الْغُرُّ يَلْمَعْنَ بِالضُّحَى</مصراع>
        <مصراع>وَأَسْيَاْفُنَا يَقْطُرْنَ مِن نَجْدَةٍ دَمَا</مصراع>
      </بيت>
    </شاهدة>
    <مقطع هوية='٢٤٤٥٩'>فَلَمْ يُرِدْ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع هوية='١٩٧٦٧'>وَبَنَاْتُ الْيَاْءِ وَالْوَاْوِ بِتِلْكَ الْمَنْزِلَةِ</مقطع>
    <مقطع هوية=''>تَقُوْلُ رَكْوَةٌ وَرِكَاْءٌ وَرَكَوَاْتٌ</مقطع>
    <مقطع هوية=''>وَقَشْوَةٌ وَقِشَاْءٌ وَقَشَوَاْتٌ</مقطع>
    <مقطع هوية=''>وَغَلْوَةٌ وَغِلَاْءٌ وَغَلَوَاْتٌ</مقطع>
    <مقطع هوية=''>وَظَبْيَةٌ وَظِبْاْءٌ وَظَبَيَاْتٌ</مقطع>
    <مقطع هوية=''>وَقَاْلُوْا <حرف>جَدَيَاْتُ الرَّحْلِ</حرف></مقطع>
    <مقطع هوية=''>وَلَمْ يُكَسِّرُوْا الْجَدْيَةَ عَلَى بِنَاْءِ الْأَكْثَرِ اسْتِغْنَاْءً بِهٰذَا</مقطع>
    <مقطع هوية=''>إذ جَاْزَ أَنْ يَعْنُوْا بِهِ الْكَثِيْرَ</مقطع>
    <مقطع هوية='٣٨١٨٦'>وَالْمُضَاْعَفُ فِي هٰذَا الْبِنَاْءِ بِتِلْكَ الْمَنْزِلَةِ</مقطع>
    <مقطع هوية=''>تَقُوْلُ سَلَّةٌ وَسِلَاْلٌ وَسَلَّاْتٌ</مقطع>
    <مقطع هوية=''>وَدَبَّةٌ وَدِبَاْبٌ وَدَبَّاْتٌ</مقطع>
  </قسم>

  <قسم هوية='١٨٩٣٦'>
    <عنوان>بَاْبُ فَعَلَة</عنوان>
    <مقطع هوية='٧٥٩٨٧'>وَأَمَّا مَا كَاْنَ <مثال>فَعَلَةً</مثال></مقطع>
    <مقطع هوية=''>فَهُوَ فِي أَدْنَى الْعَدَدِ وَبِنَاْءِ الْأَكْثَرِ بِمَنْزِلَةِ فَعْلَةٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ رَحَبَةٌ وَرَحَبَاْتٌ وَرَحَاْبٌ</مقطع>
    <مقطع هوية=''>وَرَقَبَةٌ وَرَقَبَاْتٌ وَرِقَاْبٌ</مقطع>
    <مقطع هوية='٦٢٩٢١'>وَإِنْ جَاْءَ شَيْءٌ مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ وَالْمُضاْعَفِ أُجْرِيَ هٰذَا الْمَجْرَى إذ كَاْنَ مِثْلَ مَا ذَكَرْنَا وَلٰكِنَّهُ عَزِيْزٌ</مقطع>
  </قسم>

  <قسم هوية='١٨٧٩٨'>
    <عنوان>بَاْبُ فُعْلَة</عنوان>
    <مقطع هوية='٩١٩٦٠'>وَأَمَّا مَا كَاْنَ <مثال>فُعْلَةً</مثال></مقطع>
    <مقطع هوية=''>فَإِنَّكَ إِذَا كَسَّرْتَهُ عَلَى بِنَاْءٍ أَدْنَى الْعَدَدِ أَلْحَقْتَ التَّاْءَ وَحَرَّكَتَ الْعَيْنَ بِضَمَّةٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ رُكْبَةٌ وَرُكُبَاْتٌ</مقطع>
    <مقطع هوية=''>وَغُرْفَةٌ وَغُرُفَاْتٌ</مقطع>
    <مقطع هوية=''>وَجُفرَةٌ وَجُفُرَاْتٌ</مقطع>
    <مقطع هوية=''>فَإِذَا جَاْوَزْتَ بِنَاْءَ أَدْنَى الْعَدَدِ كَسَّرْتَهُ عَلَى فُعَلٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ رُكَبٌ وَغُرَفٌ وَجُفَرٌ</مقطع>
    <مقطع هوية=''>وَرُبَّمَا كَسَّرُوْهُ عَلَى فِعَاْلٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ نُقْرَةٌ وَنِقَاْرٌ</مقطع>
    <مقطع هوية=''>وَبُرْمَةٌ وَبِرَامٌ</مقطع>
    <مقطع هوية=''>وَجُفرَةٌ وَجِفَاْرٌ</مقطع>
    <مقطع هوية=''>وَبُرْقَةٌ وَبِرَاْقٌ</مقطع>
    <مقطع هوية=''>وَمِنَ الْعَرَبِ مِنْ يَفْتَحُ الْعَيْنَ إِذَا جَمَعَ بِالتَّاْءِ</مقطع>
    <مقطع هوية=''>فَيَقُوْلُ <اسم>رُكَبَاْتٌ</اسم> وَ<اسم>غُرَفَاْتٌ</اسم></مقطع>
    <مقطع هوية='٢٢٤١٧'>سَمِعْنَا مَنْ يَقُوْلُ فِي قَوْلِ الشَّاْعِرِ</مقطع>
    <شاهدة هوية='٥٩٩١٦'>
      <بيت>
        <مصراع>وَلَمَّا رَأَوْنَا بَاْدِيًا رُكَبَاْتُنَا</مصراع>
        <مصراع>عَلَى مَوْطِنٍ لَا نَخْلِطُ الْجِدَّ بِالْهَزَلْ</مصراع>
      </بيت>
    </شاهدة>
    <مقطع هوية='٣٣٤٤٨'>وَبَنَاْتُ الْوَاْوِ بِهٰذِهِ الْمَنْزِلَةِ</مقطع>
    <مقطع هوية=''>قَاْلُوْا خُطْوَةٌ وَخُطُوَاْتٌ وَخُطىً</مقطع>
    <مقطع هوية=''>وَعُرْوَةٌ وَعُرُوَاْتٌ وَعُرىً</مقطع>
    <مقطع هوية=''>وَمِنَ الْعَرَبِ مِنْ يَدَعُ الْعَيْنَ مِنَ الضَّمَّةِ فِي فُعْلَةٍ</مقطع>
    <مقطع هوية=''>فَيَقُوْلُ عُرْوَاْتٌ وَخُطْوَاْتٌ</مقطع>
    <مقطع هوية='٥٦٠٢١'>وَأَمَّا بَنَاْتُ الْيَاْءِ إِذَا كَسَّرْتَ عَلَى بِنَاْءِ الْأَكْثَرِ</مقطع>
    <مقطع هوية=''>فَهِيَ بِمَنْزِلَةِ بَنَاْتِ الْوَاْوِ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ كُلْيَةٌ وَكُلىً</مقطع>
    <مقطع هوية=''>وَمُدْيَةٌ وَمُدىً</مقطع>
    <مقطع هوية=''>وَزُبْيَةٌ وَزُبىً</مقطع>
    <مقطع هوية=''>كَرِهُوْا أَنْ يَجْمَعُوْا بِالتَّاْءِ فَيُحَرِّكُوْا الْعَيْنَ بِالضَّمَّةِ</مقطع>
    <مقطع هوية=''>فَتَجِيْءَ هٰذِهِ الْيُاْءُ بَعْدَ ضمَّةٍ</مقطع>
    <مقطع هوية=''>فَلَمَّا ثَقُلَ ذٰلِكَ عَلَيْهِمْ تَرَكُوْهُ</مقطع>
    <مقطع هوية=''>وَاجْتَزَءُوْا بَبِنَاْءِ الْأَكْثَرِ</مقطع>
    <مقطع هوية=''>وَمَنْ خَفَّفَ قَاْلَ كُلْيَاْتٌ وَمُدْيَاْتٌ</مقطع>
    <مقطع هوية='٠٧٦٥٤'>وَقَدْ يَقُوْلُوْنَ <حرف>ثَلَاْثُ غُرَفٍ وَرُكَبٍ</حرف> وَأَشْبَاْهُ ذٰلِكَ</مقطع>
    <مقطع هوية=''>كَمَا قَاْلُوْا <حرف>ثَلَاْثَةُ قِرْدَةٍ</حرف> وَ<حرف>ثَلَاْثَةُ حِبَبَةٍ</حرف> وَ<حرف>ثَلَاْثَةُ جُرُوْحٍ</حرف> وَأَشْبَاْهُ ذٰلِكَ</مقطع>
    <مقطع هوية=''>وَهٰذَا فِي فُعْلَةٍ كَبِنَاْءِ الْأَكْثَرِ فِي فَعْلَةٍ</مقطع>
    <مقطع هوية=''>إِلَّا أَنَّ التَّاْءَ فِي فَعْلَةٍ أَشَدُّ تَمَكُّنًا</مقطع>
    <مقطع هوية=''>لِأنَّ فَعْلَةً أَكْثَرُ وَلِكَرَاْهِيَةِ ضَمَّتَيْنِ</مقطع>
    <مقطع هوية=''>وَالْمُضاْعُفُ بِمَنْزِلَةِ رُكْبَةٍ</مقطع>
    <مقطع هوية=''>قَاْلُوْا سُرَّاْتٌ وَسُرَرٌ</مقطع>
    <مقطع هوية=''>وَجُدَّةٌ وَجُدَدٌ وَجُدَّاْتٌ</مقطع>
    <مقطع هوية=''>وَلَا يُحَرِّكُوْنَ الْعَيْنَ لِأَنَّهَا كَاْنَتْ مُدْغَمَةٌ</مقطع>
    <مقطع هوية=''>وَالْفِعَاْلُ كَثِيْرٌ فِي الْمُضَاْعَفِ نَحْوُ جِلَاْلٍ وَقَبَاْبٍ وَجِبَاْبٍ</مقطع>
  </قسم>

  <قسم هوية='٨١٨١٣'>
    <عنوان>بَاْبُ فِعْلَة</عنوان>
    <مقطع هوية='٧٦٢٤٠'>وَمَا كَاْنَ <مثال>فِعْلَةً</مثال></مقطع>
    <مقطع هوية=''>فَإِنَّكَ إِذَا كَسَّرْتَهُ عَلَى بِنَاْءِ أَدْنَى الْعَدَدِ أَدْخَلْتَ التَّاْءَ وَحَرَّكْتَ الْعَيْنَ بِكَسْرَةٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ قِرِبَاْتٌ وَسِدِرَاْتٌ وَكِسِرَاْتٌ</مقطع>
    <مقطع هوية=''>وَمِنَ الْعَرَبِ مَنْ يَفْتَحُ الْعَيْنَ كَمَا فُتِحَتُ عَيْنُ فُعْلَةٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ قِرَبَاْتٌ وَسِدَرَاْتٌ وَكِسَرَاْتٌ</مقطع>
    <مقطع هوية='٦٥٢٥٨'>فَإِذَا أَرَدْتَ بِنَاْءَ الْأَكْثَرِ قُلْتَ سِدَرٌ وَقِرَبٌ وَكِسَرٌ</مقطع>
    <مقطع هوية=''>وَمَنْ قَاْلَ غُرْفَاْتٌ فَخَفَّفَ قَاْلَ كِسْرَاْتٌ</مقطع>
    <مقطع هوية='١٩٦٥٧'>وَقَدْ يُرِيْدُوْنَ الْأَقَلَّ فَيَقُوْلُوْنَ كِسَرٌ وَفِقَرٌ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ لِقِلَّةِ اسْتِعْمَاْلِهِمْ التَّاْءَ فِي هٰذَا الْبَاْبِ لِكَرَاْهِيَةِ الْكِسْرَتَيْنِ</مقطع>
    <مقطع هوية=''>وَالتَّاْءُ فِي الْفُعْلَةِ أَكْثَرُ لِأنَّ مَا يَلْتَقِي فِي أَوَّلِهِ كَسْرَتَاْنِ قَلِيْلٌ</مقطع>
    <مقطع هوية='٦٦٧٧٧'>وَبَنَاْتُ الْيَاْءِ وَالْوَاْوِ بِهٰذِهِ الْمَنْزِلَةِ</مقطع>
    <مقطع هوية=''>تَقُوْلُ لِحْيَةٌ وَلِحًى</مقطع>
    <مقطع هوية=''>وَفِرْيَةٌ وَفِرًى</مقطع>
    <مقطع هوية=''>وَرِشْوَةٌ وَرِشًا</مقطع>
    <مقطع هوية=''>وَلَا يَجْمَعُوْنَ بِالتَّاْءِ كَرَاْهِيَةَ أَنْ تَجِيْءَ الْوَاْوُ بَعْدَ كَسْرَةٍ</مقطع>
    <مقطع هوية=''>وَاسْتَثْقَلُوْا الْيَاْءَ هُنَا بَعْدَ كَسْرَةٍ</مقطع>
    <مقطع هوية=''>فَتَرَكُوْا هٰذَا اسْتِثْقَاْلًا وَاْجْتَزَءُوْا بِبِنَاْءِ الأأَكْثَرِ</مقطع>
    <مقطع هوية=''>وَمَنْ قَاْلَ كِسْرَاْتٌ قَاْلَ لِحْيَاْتٌ</مقطع>
    <مقطع هوية='٩٠٩٧٣'>وَالْمُضَاْعَفُ مِنْهُ كِالْمُضَاْعَفِ مِنْ فُعْلَةٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ قِدَّةٌ وَقِدَّاْتٌ وَقَدَدٌ</مقطع>
    <مقطع هوية=''>وَرِبَّةٌ وَرِبَاْتٌ وَرِبَبٌ</مقطع>
    <مقطع هوية=''>وَعِدَّةُ الْمَرْأَةِ وَعِدَّاْتٌ وَعِدَدٌ</مقطع>
    <مقطع هوية='٦٤٣٣٤'>وَقَدْ كُسِّرَتْ <مثال>فِعْلَةٌ</مثال> عَلَى <مثال>أَفْعُلٍ</مثال></مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَلِيْلٌ عَزِيْزٌ لَيْسَ بِالْأَصْلِ</مقطع>
    <مقطع هوية=''>قَاْلُوْا نِعْمَةٌ وَأَنْعُمٌ</مقطع>
    <مقطع هوية=''>وَشِدَّةٌ وَأَشُدُّ</مقطع>
    <مقطع هوية=''>وَكَرِهُوْا أَنْ يَقُوْلُوْا فِي رِشْوَةٍ بِالتَّاْءِ فَتَنْقَلِبُ الْوَاْوُ ياْءً</مقطع>
    <مقطع هوية=''>وَلٰكِنْ مَنْ أَسْكَنَ فَقَاْلَ كِسْرَاْتٌ قَاْلَ رِشْوَاْتٌ</مقطع>
  </قسم>

  <قسم هوية=''>
    <عنوان>بَاْبُ فَعِلَة</عنوان>
    <مقطع هوية='٥٧٧٢٧'>وَأَمَّا الْـ<مثال>فَعِلَةُ</مثال> فَإِذَا كُسَّرَتْ عَلَى بِنَاْءِ الْجَمْعِ وَلَمْ تُجْمَعْ بِالتَّاْءِ</مقطع>
    <مقطع هوية=''>كُسَّرَتْ عَلَى فَعِلٍ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ نَقِمَةٌ وَنَقِمٌ</مقطع>
    <مقطع هوية=''>وَمَعِدَةٌ وَمَعِدٌ</مقطع>
  </قسم>

  <قسم هوية='٠١١١٧'>
    <عنوان>بَاْبُ فُعَلَة</عنوان>
    <مقطع هوية='٨٩٨٦٨'>وَالْفُعَلَةُ تُكَسَّرُ عَلَى فُعَلٍ إِنْ لَمْ تُجْمَعْ بِالتَّاْءِ</مقطع>
    <مقطع هوية=''>وَذٰلِكَ قَوْلُكَ تُخَمَةٌ وَتُخَمٌ</مقطع>
    <مقطع هوية=''>وَتُهَمَةٌ وَتُهَمٌ</مقطع>
    <مقطع هوية=''>وَلَيْسَ كَرُطَبَةٍ وَرُطَبٍ</مقطع>
    <مقطع هوية=''>أَلَا تَرَى أَنَّ الرُّطَبَ مُذَكَّرٌ كاَلْبُرِّ وَالتَّمْرِ وَهٰذَا مُؤَنَّثُ كَالظُّلَمِ وَالْغُرَفِ</مقطع>
  </قسم>

