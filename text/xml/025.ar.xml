<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤٣"
     درنبورج="١-٣٣"
     البكاء="١-١٥٢"
     هارون="١-٨٤"
     يعقوب="١-١٣٧"
     رقم="٢٥">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يَجْرِي مِمَّا يَكُوْنُ ظَرْفًا هٰذَا الْمَجْرَى</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ <قول رقم="١">يَوْمُ الْجُمْعَةِ أَلْقَاْكَ فِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٣">وَ<قول رقم="٢">أَقَلُّ يَوْمٍ لَا أَلْقَاْكَ فِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٤">وَ<قول رقم="٣">أَقَلُّ يَوْمٍ لَا أَصُوْمُ فِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول رقم="٤">خَطِيْئَةُ يَوْمٍ لَا أَصِيْدُ فِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٦">وَ<قول رقم="٥">مَكَاْنُكُمْ قُمْتُ فِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٧">فَصَاْرَتْ هٰذِهِ الْأَحْرُفُ تَرْتَفِعُ بِالِابْتِدَاْءِ</مقطع>
  <مقطع رقم="٨">كَاْرْتِفَاْعِ <حرف>عَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="٩">وَصَاْرَ مَا بَعْدَهَا مَبْنِيًّا عَلَيْهَا</مقطع>
  <مقطع رقم="١٠">كَبِنَاْءِ الْفِعْلِ عَلَى الاسْمِ الْأَوَّلِ</مقطع>
  <مقطع رقم="١١">فَكَأَنَّكَ قُلْتَ <قول رقم="٦">يَوْمُ الْجُمْعَةِ مُبَاْرَكٌ</قول>
  </مقطع>
  <مقطع رقم="١٢">وَ<قول رقم="٧">مَكَاْنُكُمْ حَسَنٌ</قول>
  </مقطع>
  <مقطع رقم="١٣">وَصَاْرَ الْفِعْلُ في مَوْضِعِ هٰذَا</مقطع>
  <مقطع رقم="١٤">وَإِنَّمَا صَاْرَ هٰذَا كَهٰذَا</مقطع>
  <مقطع رقم="١٥">حِيْنَ صَاْرَ في الْآخِرِ إِضْمَاْرُ الْيَوْمِ وَالْمَكَاْنِ</مقطع>
  <مقطع رقم="١٦">فَخَرَجَ مِنْ أَنْ يَكُوْنَ ظَرْفًا</مقطع>
  <مقطع رقم="١٧">كَمَا يَخْرُجُ إِذَا قُلْتَ <قول رقم="٨">يُوْمُ الْجُمْعَةِ مُبَاْرَكٌ</قول>
  </مقطع>
  <مقطع رقم="١٨">فَإِذَا قُلْتَ <قول رقم="٩">يُوْمُ الْجُمْعَةِ صُمْتُهُ</قول>
  </مقطع>
  <مقطع رقم="١٩">فَـ<حرف>صُمْتُهُ</حرف> في مَوْضِعِ <حرف>مُبَاْرَكٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٠">حَيْثُ كَاْنَ الْمُضْمَرُ هُوَ الْأَوَّلُ</مقطع>
  <مقطع رقم="٢١">كَمَا كَاْنَ الْـ<حرف>مُبَاْرَكُ</حرف> هُوَ الْأَوَّلَ</مقطع>
  <مقطع رقم="٢٢">وَيَدْخُلُ النَّصْبُ فِيْهِ كَمَا دَخَلَ في الِاسْمِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٣">وَيَجُوْزُ في ذٰلِكَ <قول رقم="١٠">يَوْمَ الْجُمْعَةِ آتِيْكَ فِيْهِ</قول></مقطع>
  <مقطع رقم="٢٤">وَ<حرف>أَصُوْمُ فِيْهِ</حرف></مقطع>
  <مقطع رقم="٢٥">كَمَا جَاْزَ في قَوْلِكَ <قول رقم="١٢">عَبْدَ اللّٰهِ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٢٦">كَأَنَّهُ قَاْْلَ <قول رقم="١٣">أَلْقَاْكَ يَوْمَ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع رقم="٢٧">فَنَصَبَهُ لِأَنَّهُ ظَرْفٌ</مقطع>
  <مقطع رقم="٢٨">ثُمَّ فَسَّرَ فَقَاْلَ <قول رقم="١٤">أَلْقَاْكَ فِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٢٩">وَإِنْ شَاْءَ نَصَبَهُ عَلَى الْفِعْلِ نَفْسِهِ</مقطع>
  <مقطع رقم="٣٠">كَمَا أَعْمَلَ فِيْهِ الْفِعْلَ الَّذِي لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="٣١">كُلُّ ذٰلِكَ عَرَّبِيٌّ جَيِّدٌ</مقطع>
  <مقطع رقم="٣٢">أَوْ نَصَبَهَ لِأَنَّهُ ظَرْفٌ لِفِعْلٍ أَضْمَرَهُ</مقطع>
  <مقطع رقم="٣٣">وَكَأَنَّهُ قَاْْلَ <قول رقم="١٥">يَوْمَ الْجُمْعَةِ أَلْقَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَالنَّصْبُ في <قول رقم="١٦">يَوْمَ الْجُمْعَةِ صُمْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٣٥">وَ<قول رقم="١٧">يَوْمَ الْجُمْعَةِ سِرْتُه</قول>
  </مقطع>
  <مقطع رقم="٣٦">مِثْلُهُ في قَوْلِكَ <قول رقم="١٨">عَبْدَ اللّٰهِ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٣٧">إِلَّا أَنَّهُ</مقطع>
  <مقطع رقم="٣٨">إِنْ شَاْءَ نَصَبَهَ بِأَنَّهُ ظَرْفٌ</مقطع>
  <مقطع رقم="٣٩">وَإِنْ شَاْءَ أَعَمَلَ فِيْهِ الْفِعْلَ</مقطع>
  <مقطع رقم="٤٠">كَمَا أَعْمَلَهُ في <حرف>عَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع رقم="٤١">لِأَنَّهُ يَكُوْنُ ظَرْفًا وَغَيْرَ ظَرْفٍ</مقطع>
  <رأس هو="٠">
    <عنوان>عَلاْمَةُ إِضْمَاْرِ الِاسمِ الأَوَّلِ</عنوان>
  </رأس>
  <مقطع رقم="٤٢">وَلَا يَحْسُنُ في الْكَلَاْمِ</مقطع>
  <مقطع رقم="٤٣">أَنْ يَجْعَلَ الْفِعْلَ مَبْنِيًّا عَلَى الِاسْمِ</مقطع>
  <مقطع رقم="٤٤">وَلَا يَذْكُرَ عَلَاْمَةَ إِضْمَاْرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٤٥">حَتَّى يَخْرُجَ</مقطع>
  <مقطع رقم="٤٦">مِنْ لَفْظِ الْإِعْمَاْلِ في الْأَوَّلِ</مقطع>
  <مقطع رقم="٤٧">وَمِنْ حَاْلِ بِنَاْءِ الِاسْمِ عَلَيْهِ</مقطع>
  <مقطع رقم="٤٨">ويَشْغَلَهُ بِغَيْرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٤٩">حَتَّى يَمْتَنِعَ مِنْ أَنْ يَكُوْنَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="٥٠">وَلَكِنَّهُ قَدْ يَجُوْزُ في الشِّعْرِ</مقطع>
  <مقطع رقم="٥١">وَهُوَ ضَعِيْفٌ في الْكَلَاْمِ</مقطع>
  <مقطع رقم="٥٢">قَاْلَ الشَّاْعِرُ وَهُوَ أَبُوْ النَّجْمِ الْعِجْلِيُّ</مقطع>
  <شاهدة مقطع="٥٣" رقم="١">
    <بيت>
      <مصراع>قَدْ أَصْبَحَتْ أُمُّ الْخِيَاْرِ تَدَّعِي</مصراع>
      <مصراع>عَلَيَّ ذَنْبًا <ثبات>كُلُّهُ لَمْ أَصْنَعِ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٤">فَهٰذَا ضَعِيْفٌ وَهُوَ بِمَنْزِلَتِهِ في غَيْرِ الشِّعْرِ</مقطع>
  <مقطع رقم="٥٥">لِأَنَّ النَّصْبَ لَا يَكْسِرُ الْبَيْتَ</مقطع>
  <مقطع رقم="٥٦">وَلَا يُخِلُّ بِهِ تَرْكُ إِظْهَاْرِ الْهَاْءِ</مقطع>
  <مقطع رقم="٥٧">وَكَأَنَّهُ قَاْلَ <حرف>كُلُّهُ غَيْرُ مَصْنُوعٍ</حرف>
  </مقطع>
  <مقطع رقم="٥٨">وَقَاْلَ امْرُؤُ الْقَيْسِ</مقطع>
  <شاهدة مقطع="٥٩" رقم="٢">
    <بيت>
      <مصراع>فَأَقْبَلْتُ زَحْفًا عَلَى الرُّكْبَتَيْنِ</مصراع>
      <مصراع>فَـ<ثبات>ثَوْبٌ لَبِسْتُ</ثبات> وَ<ثبات>ثَوْبٌ أَجَرّ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٠">وَقَاْلَ النَّمِرُ بْنُ تَوْلَبٍ</مقطع>
  <مقطع رقم="٦١">وَسَمِعْنَاْه مِنَ الْعَرَبِ يُنْشِدُوْنَهُ</مقطع>
  <شاهدة مقطع="٦٢" رقم="٣">
    <بيت>
      <مصراع>فَيَوْمٌ عَلَيْنَا وَيَوْمٌ لَنَا</مصراع>
      <مصراع>وَ<ثبات>يَوْمٌ نُسَاْءُ</ثبات> وَ<ثبات>يَوْمٌ نُسَرّ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٣">يُرِيْدُوْنَ <حرف>نُسَاْءُ فِيْهِ وَنُسَرُّ فِيْهِ</حرف>
  </مقطع>
  <مقطع رقم="٦٤">وَزَعَمُوْا أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <حرف>شَهْرٌ ثَرَى وَشَهْرٌ تَرَى وَشَهْرٌ مَرْعَى</حرف>
  </مقطع>
  <مقطع رقم="٦٥">يُرِيْدُ <حرف>تَرَى فِيْهِ</حرف>
  </مقطع>
  <مقطع رقم="٦٦">وَقَاْلَ</مقطع>
  <شاهدة مقطع="٦٧" رقم="٤">
    <بيت>
      <مصراع>
      <ثبات>ثَلَاثٌ كُلُّهُنَّ قَتَلْتُ</ثبات> عَمْدًا</مصراع>
      <مصراع>فَأَخْزَى اللّٰهُ رَاْبِعَةً تَعُوْدُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٨">فَهٰذَا ضَعِيْفٌ وَالْوَجْهُ الْأَكْثَرُ الْأَعْرَفُ النَّصْبُ</مقطع>
  <مقطع رقم="٦٩">وَإِنَّمَا شَبَّهُوْهُ بِقَوْلِهِمْ <قول رقم="١٩">الَّذِي رَأَيْتُ فُلَاْنٌ</قول>
  </مقطع>
  <مقطع رقم="٧٠">حَيْثُ لَمْ يَذْكُرُوْا الْهَاْءِ</مقطع>
  <مقطع رقم="٧١">وَهُوَ في هٰذَا أَحْسَنُ لِأَنَّ <حرف>رَأَيْتُ</حرف> تَمَاْمُ الِاسْمِ بِهِ يَتِمُّ</مقطع>
  <مقطع رقم="٧٢">وَلَيْسَ بِخَبَرٍ وَلَا صِفَةٍ</مقطع>
  <مقطع رقم="٧٣">فَكَرِهُوا طُوْلَهُ حَيْثُ كَاْنَ بِمَنْزِلَةِ اسْمٍ وَاْحِدٍ</مقطع>
  <مقطع رقم="٧٤">كَمَا كَرِهُوْا طُوْلَ <حرف>اشْهِيْبَاْبٍ</حرف> فَقَاْلُوَا <حرف>اشْهِبَاْبٍ</حرف>
  </مقطع>
  <رأس هو="٠">
    <عنوان>الْفِعْلُ في الْوَصْفِ</عنوان>
  </رأس>
  <مقطع رقم="٧٥">وَهُوَ في الْوَصْفِ أَمْثَلُ مِنْهُ في الْخَبَرِ</مقطع>
  <مقطع رقم="٧٦">وَهُوَ عَلَى ذٰلِكَ ضَعِيْفٌ</مقطع>
  <مقطع رقم="٧٧">لَيْسَ كَحُسْنِهِ بِالْهَاْءِ</مقطع>
  <مقطع رقم="٧٨">لِأَنَّهُ فِي مَوْضِعِ مَا هُوَ مِنْ الِاسْمِ وَمَا يَجْرِي عَلَيْهِ</مقطع>
  <مقطع رقم="٧٩">وَلَيْسَ بِمُنْقَطِعٍ مِنْهُ خَبَرًا مَبْنِيًّا عَلَيْهِ وَلَا مُبْتَدَأً</مقطع>
  <مقطع رقم="٨٠">فَضَاْرَعَ مَا يَكُوْنُ مِنْ تَمَاْمِ الِاسْمِ</مقطع>
  <مقطع رقم="٨١">وَإِنْ لَمْ يَكُنْ تَمَاْمًا لَهُ وَلَا مِنْهُ في الْبِنَاْءِ</مقطع>
  <مقطع رقم="٨٢">وَذٰلِكَ قَوْلُكَ <قول رقم="٢٠">هٰذَا رَجُلٌ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٣">وَ<قول رقم="٢١">النَّاْسُ رَجُلَاْنِ رَجُلٌ أَكْرَمْتُهُ وَرَجُلٌ أَهَنْتُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٤">كَأَنَّهُ قَاْلَ <قول رقم="٢٢">هٰذَا رَجُلٌ مَضْرُوْبٌ</قول>
  </مقطع>
  <مقطع رقم="٨٥">وَ<قول رقم="٢٣">النَّاْسُ رَجُلَانِ رَجُلٌ مُكْرَمٌ وَرَجُلٌ مُهَاْنٌ</قول>
  </مقطع>
  <مقطع رقم="٨٦">فَإِنْ حَذَفْتَ الْهَاْءَ جَاْزَ</مقطع>
  <مقطع رقم="٨٧">وَكَاْنَ أَقْوَى مِمَّا يَكُوْنُ خَبَرًا</مقطع>
  <مقطع رقم="٨٨">وَمِمَّا جَاْءَ في الشِّعْرِ مِنْ ذٰلِكَ قَوْلُ جَرِيْرٍ</مقطع>
  <شاهدة مقطع="٨٩" رقم="٥">
    <بيت>
      <مصراع>أَبَحْتَ حِمَى تِهَاْمَةَ بَعْدَ نَجْدٍ</مصراع>
      <مصراع>وَمَا <ثبات>شَيْءٌ حَمَيْتَ</ثبات> بِمُسْتَبَاْحِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٩٠">يُرِيْدُ الْهَاْءَ</مقطع>
  <مقطع رقم="٩١">وَقَاْلَ الشَّاْعِرُ الْحَاْرِثُ بْنُ كَلَدَةَ</مقطع>
  <شاهدة مقطع="٩٢" رقم="٦">
    <بيت>
      <مصراع>فَمَا أَدْرِي أَغَيَّرَهُمْ تَنَاْءٍ</مصراع>
      <مصراع>وَطُوْلُ الْعَهْدِ أَمْ <ثبات>مَاْلٌ أَصَاْبُوا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٩٣">يُرِيْدُ <حرف>أَصَاْبُوْهُ</حرف>
  </مقطع>
  <مقطع رقم="٩٤">وَلَا سَبِيْلَ إِلَى النَّصْبِ وَإِنْ تَرَكْتَ الْهَاْءَ لِأَنَّهُ وَصْفٌ</مقطع>
  <مقطع رقم="٩٥">كَمَا لَمْ يَكُنْ النَّصْبُ فِيْمَا أَتْمَمْتَ بِهِ الْاسْمَ</مقطع>
  <مقطع رقم="٩٦">يَعْنِي الصَّلَةَ</مقطع>
  <مقطع رقم="٩٧">فَمِنْ ثَمَّ كَاْنَ أَقْوَى مِمَّا يَكُوْنُ في مَوْضِعِ الْمَبْنِيِّ عَلَى الْمُبْتَدَإِ</مقطع>
  <مقطع رقم="٩٨">لِأَنَّهُ لَا يُنْصَبُ بِهِ</مقطع>
  <مقطع رقم="٩٩">وَإِنَّمَا مَنَعَهُمْ أَنْ يَنْصِبُوْا بِالْفِعْلِ الِاسْمَ إِذَا كَاْنَ صِفَةً لَهُ</مقطع>
  <مقطع رقم="١٠٠">أَنَّ الصِّفَةَ تَمَاْمُ الِاسْمِ</مقطع>
  <مقطع رقم="١٠١">أَلَا تَرَى أَنَّ قَوْلَكَ <قول رقم="٢٤">مَرَرْتُ بِزَيْدٍ الْأَحْمَرِ</قول>
  </مقطع>
  <مقطع رقم="١٠٢">كَقَوْلِكَ <قول رقم="٢٥">مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١٠٣">وَذٰلِكَ أَنَّكَ لَوْ احْتَجْتَ إِلَى أَنْ تَنْعَتَ</مقطع>
  <مقطع رقم="١٠٤">فَقُلْتَ <حرف>مَرَرْتُ بِزَيْدٍ</حرف> وَأَنْتَ تُرِيْدُ الْأَحْمَرَ وَهُوَ لَا يُعْرَفُ حَتَّى تَقُوْلَ <حرف>الْأَحْمَرِ</حرف>
  </مقطع>
  <مقطع رقم="١٠٥">لَمْ يَكُنْ تَمَّ الْاسْمُ</مقطع>
  <مقطع رقم="١٠٦">فَهُوَ يَجْرِي مَنْعُوْتًا مَجْرَى <حرف>مَرَرْتُ بِزَيْدٍ</حرف> إِذَا كَاْنَ يُعْرَفُ وَحْدَهُ</مقطع>
  <مقطع رقم="١٠٧">فَصَاْرَ <حرف>الْأَحْمَرِ</حرف> كَأَنَّهُ مِنْ صِلَتِهِ</مقطع>
