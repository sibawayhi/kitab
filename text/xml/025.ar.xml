<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٤٣"
     درنبورج="١-٣٣"
     البكاء="١-١٥٢"
     هارون="١-٨٤"
     يعقوب="١-١٣٧"
     رقم="٢٥">
  <عنوان>
    <مقطع هوية='٨٩٧٩٧'>هٰذَا بَاْبُ مَا يَجْرِي مِمَّا يَكُوْنُ ظَرْفًا هٰذَا الْمَجْرَى</مقطع>
  </عنوان>
  <مقطع هوية='٣٤٤٠٣'>وَذٰلِكَ قَوْلُكَ <قول هوية='٥١٢٨٧'>يَوْمُ الْجُمْعَةِ أَلْقَاْكَ فِيْهِ</قول>
  </مقطع>
  <مقطع هوية='١٣٤٠٨'>وَ<قول هوية='٧٤٧٧٦'>أَقَلُّ يَوْمٍ لَا أَلْقَاْكَ فِيْهِ</قول>
  </مقطع>
  <مقطع هوية='٧٢٥١٢'>وَ<قول هوية='٠٧٩١١'>أَقَلُّ يَوْمٍ لَا أَصُوْمُ فِيْهِ</قول>
  </مقطع>
  <مقطع هوية='٨٦٦٥٦'>وَ<قول هوية='٠٤٢٠٢'>خَطِيْئَةُ يَوْمٍ لَا أَصِيْدُ فِيْهِ</قول>
  </مقطع>
  <مقطع هوية='١٤١٠٣'>وَ<قول هوية='١٤٨٧٧'>مَكَاْنُكُمْ قُمْتُ فِيْهِ</قول>
  </مقطع>
  <مقطع هوية='٣٠٤٧٦'>فَصَاْرَتْ هٰذِهِ الْأَحْرُفُ تَرْتَفِعُ بِالِابْتِدَاْءِ</مقطع>
  <مقطع هوية='٠٧٧٧٣'>كَاْرْتِفَاْعِ <حرف>عَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع هوية='٩٧٤٤٧'>وَصَاْرَ مَا بَعْدَهَا مَبْنِيًّا عَلَيْهَا</مقطع>
  <مقطع هوية='٨٣٨٨٣'>كَبِنَاْءِ الْفِعْلِ عَلَى الاسْمِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٤٦٤٦١'>فَكَأَنَّكَ قُلْتَ <قول هوية='٧٦٠٠٧'>يَوْمُ الْجُمْعَةِ مُبَاْرَكٌ</قول>
  </مقطع>
  <مقطع هوية='٣٣٧٦٣'>وَ<قول هوية='٣٧٦٣٣'>مَكَاْنُكُمْ حَسَنٌ</قول>
  </مقطع>
  <مقطع هوية='٥٤٢٠٠'>وَصَاْرَ الْفِعْلُ في مَوْضِعِ هٰذَا</مقطع>
  <مقطع هوية='٧٦٩٥٠'>وَإِنَّمَا صَاْرَ هٰذَا كَهٰذَا</مقطع>
  <مقطع هوية='١٢٠٧٦'>حِيْنَ صَاْرَ في الْآخِرِ إِضْمَاْرُ الْيَوْمِ وَالْمَكَاْنِ</مقطع>
  <مقطع هوية='٤٨٦٩٦'>فَخَرَجَ مِنْ أَنْ يَكُوْنَ ظَرْفًا</مقطع>
  <مقطع هوية='٦٥٧٨٣'>كَمَا يَخْرُجُ إِذَا قُلْتَ <قول هوية='١٧٨٨٧'>يُوْمُ الْجُمْعَةِ مُبَاْرَكٌ</قول>
  </مقطع>
  <مقطع هوية='١٥٠٥٣'>فَإِذَا قُلْتَ <قول هوية='٨١٧١٥'>يُوْمُ الْجُمْعَةِ صُمْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٢٠١٧٤'>فَـ<حرف>صُمْتُهُ</حرف> في مَوْضِعِ <حرف>مُبَاْرَكٍ</حرف>
  </مقطع>
  <مقطع هوية='٨٢٥٤١'>حَيْثُ كَاْنَ الْمُضْمَرُ هُوَ الْأَوَّلُ</مقطع>
  <مقطع هوية='٦٨٢٠٦'>كَمَا كَاْنَ الْـ<حرف>مُبَاْرَكُ</حرف> هُوَ الْأَوَّلَ</مقطع>
  <مقطع هوية='٣٢٧١١'>وَيَدْخُلُ النَّصْبُ فِيْهِ كَمَا دَخَلَ في الِاسْمِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٩١٥٨٠'>وَيَجُوْزُ في ذٰلِكَ <قول هوية='١٦١٣١'>يَوْمَ الْجُمْعَةِ آتِيْكَ فِيْهِ</قول></مقطع>
  <مقطع هوية='١٢٣٣٥'>وَ<حرف>أَصُوْمُ فِيْهِ</حرف></مقطع>
  <مقطع هوية='١٧٨٨٨'>كَمَا جَاْزَ في قَوْلِكَ <قول هوية='٤٩٤٤٤'>عَبْدَ اللّٰهِ مَرَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٣٩١٧٣'>كَأَنَّهُ قَاْْلَ <قول هوية='٨٢٤٥٣'>أَلْقَاْكَ يَوْمَ الْجُمْعَةِ</قول>
  </مقطع>
  <مقطع هوية='٢٠٩١٦'>فَنَصَبَهُ لِأَنَّهُ ظَرْفٌ</مقطع>
  <مقطع هوية='٣٨٨٤٥'>ثُمَّ فَسَّرَ فَقَاْلَ <قول هوية='٦٧٦١٢'>أَلْقَاْكَ فِيْهِ</قول>
  </مقطع>
  <مقطع هوية='٠٣٥٧٨'>وَإِنْ شَاْءَ نَصَبَهُ عَلَى الْفِعْلِ نَفْسِهِ</مقطع>
  <مقطع هوية='٤٤٥٤٢'>كَمَا أَعْمَلَ فِيْهِ الْفِعْلَ الَّذِي لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع هوية='٠٦٨٣٥'>كُلُّ ذٰلِكَ عَرَّبِيٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='٠٩٦٠٧'>أَوْ نَصَبَهَ لِأَنَّهُ ظَرْفٌ لِفِعْلٍ أَضْمَرَهُ</مقطع>
  <مقطع هوية='٤٣٦٤٠'>وَكَأَنَّهُ قَاْْلَ <قول هوية='٦٣٢٠٨'>يَوْمَ الْجُمْعَةِ أَلْقَاْكَ</قول>
  </مقطع>
  <مقطع هوية='٨٧٤٨٥'>وَالنَّصْبُ في <قول هوية='٤٩٨٥٠'>يَوْمَ الْجُمْعَةِ صُمْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٦٨٧٠٦'>وَ<قول هوية='٢١٠٢٣'>يَوْمَ الْجُمْعَةِ سِرْتُه</قول>
  </مقطع>
  <مقطع هوية='٥٩٦٤٠'>مِثْلُهُ في قَوْلِكَ <قول هوية='٢٧٠٢٥'>عَبْدَ اللّٰهِ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='١٥٢٩١'>إِلَّا أَنَّهُ</مقطع>
  <مقطع هوية='٧٦٣٨٩'>إِنْ شَاْءَ نَصَبَهَ بِأَنَّهُ ظَرْفٌ</مقطع>
  <مقطع هوية='٦٧٥٦١'>وَإِنْ شَاْءَ أَعَمَلَ فِيْهِ الْفِعْلَ</مقطع>
  <مقطع هوية='٩٦٨١٤'>كَمَا أَعْمَلَهُ في <حرف>عَبْدِ اللّٰهِ</حرف>
  </مقطع>
  <مقطع هوية='٥٠٣٤٩'>لِأَنَّهُ يَكُوْنُ ظَرْفًا وَغَيْرَ ظَرْفٍ</مقطع>
  <رأس هوية='٩٠٩١٤'>
    <عنوان>عَلاْمَةُ إِضْمَاْرِ الِاسمِ الأَوَّلِ</عنوان>
  </رأس>
  <مقطع هوية='٨٣٠٢٦'>وَلَا يَحْسُنُ في الْكَلَاْمِ</مقطع>
  <مقطع هوية='٥٢٧٨٧'>أَنْ يَجْعَلَ الْفِعْلَ مَبْنِيًّا عَلَى الِاسْمِ</مقطع>
  <مقطع هوية='٠٦٥٣٥'>وَلَا يَذْكُرَ عَلَاْمَةَ إِضْمَاْرِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٧٩٠٨٧'>حَتَّى يَخْرُجَ</مقطع>
  <مقطع هوية='٢٩٤١٢'>مِنْ لَفْظِ الْإِعْمَاْلِ في الْأَوَّلِ</مقطع>
  <مقطع هوية='٨١٩٩٦'>وَمِنْ حَاْلِ بِنَاْءِ الِاسْمِ عَلَيْهِ</مقطع>
  <مقطع هوية='٦٤٥٦٠'>ويَشْغَلَهُ بِغَيْرِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٤٢١٥٦'>حَتَّى يَمْتَنِعَ مِنْ أَنْ يَكُوْنَ يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية='٠٣٠٣٥'>وَلَكِنَّهُ قَدْ يَجُوْزُ في الشِّعْرِ</مقطع>
  <مقطع هوية='٢٣٠٧٤'>وَهُوَ ضَعِيْفٌ في الْكَلَاْمِ</مقطع>
  <مقطع هوية='٧٤٧٥٣'>قَاْلَ الشَّاْعِرُ وَهُوَ أَبُوْ النَّجْمِ الْعِجْلِيُّ</مقطع>
  <شاهدة هوية='١٢٨٧٥'>
    <بيت>
      <مصراع>قَدْ أَصْبَحَتْ أُمُّ الْخِيَاْرِ تَدَّعِي</مصراع>
      <مصراع>عَلَيَّ ذَنْبًا <ثبات>كُلُّهُ لَمْ أَصْنَعِ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩١٥٨١'>فَهٰذَا ضَعِيْفٌ وَهُوَ بِمَنْزِلَتِهِ في غَيْرِ الشِّعْرِ</مقطع>
  <مقطع هوية='٢١٣١٣'>لِأَنَّ النَّصْبَ لَا يَكْسِرُ الْبَيْتَ</مقطع>
  <مقطع هوية='٨٠٨٦٠'>وَلَا يُخِلُّ بِهِ تَرْكُ إِظْهَاْرِ الْهَاْءِ</مقطع>
  <مقطع هوية='٢٤٣١٢'>وَكَأَنَّهُ قَاْلَ <حرف>كُلُّهُ غَيْرُ مَصْنُوعٍ</حرف>
  </مقطع>
  <مقطع هوية='٧٧٥١٠'>وَقَاْلَ امْرُؤُ الْقَيْسِ</مقطع>
  <شاهدة هوية='٤٥٧٣١'>
    <بيت>
      <مصراع>فَأَقْبَلْتُ زَحْفًا عَلَى الرُّكْبَتَيْنِ</مصراع>
      <مصراع>فَـ<ثبات>ثَوْبٌ لَبِسْتُ</ثبات> وَ<ثبات>ثَوْبٌ أَجَرّ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٧٠٨٠٠'>وَقَاْلَ النَّمِرُ بْنُ تَوْلَبٍ</مقطع>
  <مقطع هوية='٩٠٧٣٣'>وَسَمِعْنَاْه مِنَ الْعَرَبِ يُنْشِدُوْنَهُ</مقطع>
  <شاهدة هوية='٥٨٩٢٢'>
    <بيت>
      <مصراع>فَيَوْمٌ عَلَيْنَا وَيَوْمٌ لَنَا</مصراع>
      <مصراع>وَ<ثبات>يَوْمٌ نُسَاْءُ</ثبات> وَ<ثبات>يَوْمٌ نُسَرّ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٥٨٧٥'>يُرِيْدُوْنَ <حرف>نُسَاْءُ فِيْهِ وَنُسَرُّ فِيْهِ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٤٦٠'>وَزَعَمُوْا أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <حرف>شَهْرٌ ثَرَى وَشَهْرٌ تَرَى وَشَهْرٌ مَرْعَى</حرف>
  </مقطع>
  <مقطع هوية='٢٩٢١٧'>يُرِيْدُ <حرف>تَرَى فِيْهِ</حرف>
  </مقطع>
  <مقطع هوية='٤٨٣٥٤'>وَقَاْلَ</مقطع>
  <شاهدة هوية='٢٣٥٨١'>
    <بيت>
      <مصراع>
      <ثبات>ثَلَاثٌ كُلُّهُنَّ قَتَلْتُ</ثبات> عَمْدًا</مصراع>
      <مصراع>فَأَخْزَى اللّٰهُ رَاْبِعَةً تَعُوْدُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢١٥٠٥'>فَهٰذَا ضَعِيْفٌ وَالْوَجْهُ الْأَكْثَرُ الْأَعْرَفُ النَّصْبُ</مقطع>
  <مقطع هوية='٣٠٠٦٤'>وَإِنَّمَا شَبَّهُوْهُ بِقَوْلِهِمْ <قول هوية='٤٠٢٣٢'>الَّذِي رَأَيْتُ فُلَاْنٌ</قول>
  </مقطع>
  <مقطع هوية='٨٤١٤٦'>حَيْثُ لَمْ يَذْكُرُوْا الْهَاْءِ</مقطع>
  <مقطع هوية='١٣٧١٠'>وَهُوَ في هٰذَا أَحْسَنُ لِأَنَّ <حرف>رَأَيْتُ</حرف> تَمَاْمُ الِاسْمِ بِهِ يَتِمُّ</مقطع>
  <مقطع هوية='٤٦٠٧٣'>وَلَيْسَ بِخَبَرٍ وَلَا صِفَةٍ</مقطع>
  <مقطع هوية='٢٢٩١٢'>فَكَرِهُوا طُوْلَهُ حَيْثُ كَاْنَ بِمَنْزِلَةِ اسْمٍ وَاْحِدٍ</مقطع>
  <مقطع هوية='١٧٣٠٢'>كَمَا كَرِهُوْا طُوْلَ <حرف>اشْهِيْبَاْبٍ</حرف> فَقَاْلُوَا <حرف>اشْهِبَاْبٍ</حرف>
  </مقطع>
  <رأس هوية='٤٩٨٩٠'>
    <عنوان>الْفِعْلُ في الْوَصْفِ</عنوان>
  </رأس>
  <مقطع هوية='٦٤٢٣٠'>وَهُوَ في الْوَصْفِ أَمْثَلُ مِنْهُ في الْخَبَرِ</مقطع>
  <مقطع هوية='٩٣٨٩٤'>وَهُوَ عَلَى ذٰلِكَ ضَعِيْفٌ</مقطع>
  <مقطع هوية='٦٧١٠٦'>لَيْسَ كَحُسْنِهِ بِالْهَاْءِ</مقطع>
  <مقطع هوية='٣٦٩٧٠'>لِأَنَّهُ فِي مَوْضِعِ مَا هُوَ مِنْ الِاسْمِ وَمَا يَجْرِي عَلَيْهِ</مقطع>
  <مقطع هوية='٧٨٣٥٥'>وَلَيْسَ بِمُنْقَطِعٍ مِنْهُ خَبَرًا مَبْنِيًّا عَلَيْهِ وَلَا مُبْتَدَأً</مقطع>
  <مقطع هوية='٥٢٨٩٩'>فَضَاْرَعَ مَا يَكُوْنُ مِنْ تَمَاْمِ الِاسْمِ</مقطع>
  <مقطع هوية='٣٦١٣٥'>وَإِنْ لَمْ يَكُنْ تَمَاْمًا لَهُ وَلَا مِنْهُ في الْبِنَاْءِ</مقطع>
  <مقطع هوية='٨٧٦٧٧'>وَذٰلِكَ قَوْلُكَ <قول هوية='٦٠٠٧٩'>هٰذَا رَجُلٌ ضَرَبْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٦٢٣٥٤'>وَ<قول هوية='١٣٤٥٩'>النَّاْسُ رَجُلَاْنِ رَجُلٌ أَكْرَمْتُهُ وَرَجُلٌ أَهَنْتُهُ</قول>
  </مقطع>
  <مقطع هوية='٥١٠٢٢'>كَأَنَّهُ قَاْلَ <قول هوية='٤٧٣٩٧'>هٰذَا رَجُلٌ مَضْرُوْبٌ</قول>
  </مقطع>
  <مقطع هوية='٦٧٨٢٩'>وَ<قول هوية='٣٤٧١٨'>النَّاْسُ رَجُلَانِ رَجُلٌ مُكْرَمٌ وَرَجُلٌ مُهَاْنٌ</قول>
  </مقطع>
  <مقطع هوية='٠٢٧٦٧'>فَإِنْ حَذَفْتَ الْهَاْءَ جَاْزَ</مقطع>
  <مقطع هوية='٠٦٤٠٨'>وَكَاْنَ أَقْوَى مِمَّا يَكُوْنُ خَبَرًا</مقطع>
  <مقطع هوية='٦٧٩٨٧'>وَمِمَّا جَاْءَ في الشِّعْرِ مِنْ ذٰلِكَ قَوْلُ جَرِيْرٍ</مقطع>
  <شاهدة هوية='٩٥٢١٥'>
    <بيت>
      <مصراع>أَبَحْتَ حِمَى تِهَاْمَةَ بَعْدَ نَجْدٍ</مصراع>
      <مصراع>وَمَا <ثبات>شَيْءٌ حَمَيْتَ</ثبات> بِمُسْتَبَاْحِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٨٧٨٨'>يُرِيْدُ الْهَاْءَ</مقطع>
  <مقطع هوية='٢٢٧٩٢'>وَقَاْلَ الشَّاْعِرُ الْحَاْرِثُ بْنُ كَلَدَةَ</مقطع>
  <شاهدة هوية='٤٤٢٧٠'>
    <بيت>
      <مصراع>فَمَا أَدْرِي أَغَيَّرَهُمْ تَنَاْءٍ</مصراع>
      <مصراع>وَطُوْلُ الْعَهْدِ أَمْ <ثبات>مَاْلٌ أَصَاْبُوا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٢٧٤٧'>يُرِيْدُ <حرف>أَصَاْبُوْهُ</حرف>
  </مقطع>
  <مقطع هوية='٨٧١٩٨'>وَلَا سَبِيْلَ إِلَى النَّصْبِ وَإِنْ تَرَكْتَ الْهَاْءَ لِأَنَّهُ وَصْفٌ</مقطع>
  <مقطع هوية='٢٣٩٢٣'>كَمَا لَمْ يَكُنْ النَّصْبُ فِيْمَا أَتْمَمْتَ بِهِ الْاسْمَ</مقطع>
  <مقطع هوية='٣٩٦٤٨'>يَعْنِي الصَّلَةَ</مقطع>
  <مقطع هوية='٠٧٨١٢'>فَمِنْ ثَمَّ كَاْنَ أَقْوَى مِمَّا يَكُوْنُ في مَوْضِعِ الْمَبْنِيِّ عَلَى الْمُبْتَدَإِ</مقطع>
  <مقطع هوية='٦٥٧٧٢'>لِأَنَّهُ لَا يُنْصَبُ بِهِ</مقطع>
  <مقطع هوية='٣٨٨٧٨'>وَإِنَّمَا مَنَعَهُمْ أَنْ يَنْصِبُوْا بِالْفِعْلِ الِاسْمَ إِذَا كَاْنَ صِفَةً لَهُ</مقطع>
  <مقطع هوية='١٤٥٤٩'>أَنَّ الصِّفَةَ تَمَاْمُ الِاسْمِ</مقطع>
  <مقطع هوية='٤٥١٠٦'>أَلَا تَرَى أَنَّ قَوْلَكَ <قول هوية='٤٦٨٩١'>مَرَرْتُ بِزَيْدٍ الْأَحْمَرِ</قول>
  </مقطع>
  <مقطع هوية='٤٥٧١٨'>كَقَوْلِكَ <قول هوية='٣٤٣٨٤'>مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='٠٨٩٣٠'>وَذٰلِكَ أَنَّكَ لَوْ احْتَجْتَ إِلَى أَنْ تَنْعَتَ</مقطع>
  <مقطع هوية='٢٣٧٩٤'>فَقُلْتَ <حرف>مَرَرْتُ بِزَيْدٍ</حرف> وَأَنْتَ تُرِيْدُ الْأَحْمَرَ وَهُوَ لَا يُعْرَفُ حَتَّى تَقُوْلَ <حرف>الْأَحْمَرِ</حرف>
  </مقطع>
  <مقطع هوية='٩١٢١١'>لَمْ يَكُنْ تَمَّ الْاسْمُ</مقطع>
  <مقطع هوية='٦٤٢٧٥'>فَهُوَ يَجْرِي مَنْعُوْتًا مَجْرَى <حرف>مَرَرْتُ بِزَيْدٍ</حرف> إِذَا كَاْنَ يُعْرَفُ وَحْدَهُ</مقطع>
  <مقطع هوية='٩٨٠٧١'>فَصَاْرَ <حرف>الْأَحْمَرِ</حرف> كَأَنَّهُ مِنْ صِلَتِهِ</مقطع>
