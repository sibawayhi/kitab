<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٢٥٧"
     درنبورج="٢-٢٧٧"
     البكاء="٥-٤٣٧"
     هارون="٤-١١٣"
     يعقوب="٤-٢٣٠"
     رقم="٤٧٥">

  <التحرير>
    <تشكيل  نسخة="1" نسبة="0"/>
    <توسيم  نسخة="1"/>
    <أقوال  نسخة="1" نسبة="0"/>
    <شواهد  نسخة="1" نسبة="0"/>
  </التحرير>

  <عنوان>
    <مقطع>هذا باب ما يسكن استخفافاً وهو في الأصل متحرك</مقطع>
  </عنوان>
  <مقطع>وذلك قولهم في فخذٍ فخذٌ وفي كبدٍ كبدٌ وفي عضدٍ عضدٌ وفي الرجل رجلٌ وفي كرم الرجل كرم وفي علم علم وهي لغة بكر بن وائل وأناسٍ كثير من بني تميم<هارون مجلد="٤" صفحة="١١٣"/>وقالوا في مثلٍ لم يحرم من فصد له وقال أبو النجم</مقطع>
  <شاهدة>
    <بيت>
      <مصراع>لو عُصْرَ منه البانُ والمِسكُ انْعَصَرْ</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع>يريد عصر</مقطع>
  <مقطع>وإنما حملهم على هذا أنهم كرهوا أن يرفعوا ألسنتهم عن المفتوح إلى المكسور والمفتوح أخف عليهم فكرهوا أن ينتقلوا من الأخف إلى الأثقل وكرهوا في عصر الكسرة بعد الضمة كما يكرهون الواو مع الياء في مواضع ومع هذا أنه بناءٌ ليس من كلامهم إلا في هذا الموضع من الفعل فكرهوا أن يحولوا ألسنتهم إلى الاستثقال</مقطع>
  <مقطع>وإذا تتابعت الضمتان فإن هؤلاء يخففون أيضاً كرهوا ذلك كما يكرهون الواوين وإنما الضمتان من الواوين فكما تكره الواوان كذلك تكره الضمتان لأن الضمة مع الواو وذلك قولك الرسل والطنب والعنق تريد الرسل والطنب والعنق<هارون مجلد="٤" صفحة="١١٤"/>وكذلك الكسرتان تكرهان عند هؤلاء كما تكره الياءان في مواضع وإنما الكسرة من الياء فكرهوا الكسرتين كما تكره الياءان وذلك في قولك في إبلٍ إبلٌ</مقطع>
  <مقطع>وأما ما توالت فيه الفتحتان فإنهم لا يسكنون منه لأن الفتح أخف عليهم من الضم والكسر كما أن الألف أخف من الواو والياء وسترى ذلك إن شاء الله وذلك نحو جملٍ وحملٍ ونحو ذلك</مقطع>
  <مقطع>ومما أشبه الأول فيما ليس على ثلاثة أحرف قولهم أراك منتفخاً تسكن الفاء تريد منتفخاً فما بعد النون بمنزلة كبدٍ</مقطع>
  <مقطع>ومن ذلك قولهم انطلق بفتح القاف لئلا يلتقي ساكنان كما فعلوا ذلك بأين وأشباهها حدثنا بذلك الخليل عن العرب وأنشدنا بيتاً وهو لرجل من أزد السراة</مقطع>
  <شاهدة>
    <بيت>
      <مصراع>عِجِبْتُ لمولودٍ ولَيْس له أبٌ</مصراع>
      <مصراع>وذِي وَلَدٍ لم يَلْدَهُ أَبَوانِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع>وسمعناه من العرب كما أنشده الخليل ففتحوا الدال كي لا يلتقي ساكنان وحيث أسكنوا موضع العين حركوا الدال</مقطع>
  <هارون مجلد="٤" صفحة="١١٥"/>
</باب>
