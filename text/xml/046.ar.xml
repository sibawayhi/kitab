<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٢٠"
     درنبورج="١-٩٩"
     البكاء="١-٣١٠"
     هارون="١-٢٣٥"
     يعقوب="١-٢٩٣"
     رقم="٤٦">

  <عنوان>
    <مقطع هوية='٦١١٤٤'>هٰذَا بَاْبُ مَا لَا يَعْمَلُ فِيْهِ مَا قَبْلَهُ مِنَ الْفِعْلِ</مقطع>
    <مقطع هوية='٥٥٩٦٨'>الَّذِي يَتَعَدَّى إِلَى الْمَفْعُوْلِ وَلَا غَيْرِهِ</مقطع>
  </عنوان>
  <مقطع هوية='٣٥٧٦٥'>لِأَنَّهُ كَلَاْمٌ قَدْ عَمِلَ بَعْضُهُ فَىِ بَعْضٍ</مقطع>
  <مقطع هوية='٠٩٤٦٨'>فَلَا يَكُوْنُ إِلَّا مُبْتَدَأً لَا يَعْمَلُ فِيْهِ شَئٌ قَبْلَهَ</مقطع>
  <مقطع هوية='٣٧٧٧٢'>لِأَنَّ أَلِفَ الِاسْتِفْهَاْمِ تَمْنَعُهُ مِنْ ذٰلِكَ</مقطع>
  <مقطع هوية='٤٣٨٧٦'>وَهُوَ قَوْلُكَ  <قول هوية='٠٤٠٦٤'>قَدْ عَلِمْتُ أَعَبْدُ اللهِ ثَمَّ أَمْ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٨٥٣٨٨'>وَ<قول هوية='٣٥٤٠٣'>قَدْ عَرَفْتُ أَبُوْ مَنْ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٤٢٧٤٨'>وَ<قول هوية='٠٩٠١٢'>قَدْ عَرَفْتُ أَيُّهُمْ أَبُوْهُ [أَبُوْكَ]</قول>
  </مقطع>
  <مقطع هوية='٥١٦٦٦'>وَ<قول هوية='٩٤٠٣٨'>أَمَا تَرَى أَىُّ بَرْقٍ هَاْهُنَا</قول>
  </مقطع>
  <مقطع هوية='٨٩٦٢٧'>فَهٰذَا فِي مَوْضِعِ مَفْعُوْلٍ</مقطع>
  <مقطع هوية='٢٧٣٠٦'>كَمَا أَنَّكَ إِذَا قُلْتَ  <قول هوية='٠١٠٠٤'>عَبْدُ اللهِ هَلْ رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٥٢٠٢٢'>فَهٰذَا الْكَلَاْمُ فِي مَوْضِعِ الْمَبْنِيِّ عَلَى الْمُبْتَدَإِ الَّذِي يَعَمَلُ فِيْهِ فَيَرْفَعُهُ</مقطع>
  <مقطع هوية='٥٠٥٧٢'>وَمِثْلُ ذٰلِكَ  <قول هوية='٤٤٨٦٧'>لَيْتَ شِعْرِي أَعْبُدُ اللهِ ثَمَّ أَمْ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٣١٧٠٢'>وَ<قول هوية='٤١٢٧١'>لَيْتَ شِعْرِي هَلْ رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٩٤٦٤٤'>فَهٰذَا فِي مَوْضِعِ خَبَرِ لَيْتَ</مقطع>
  <مقطع هوية='٠٣٢٣٩'>فَإِنَّمَا أَدْخَلْتَ هَذِهِ الْأَشْيَاْءَ عَلَى قَوْلِكَ  <قول هوية='٧٧٥١٢'>أَزَيْدٌ ثَمَّ أَمْ عَمْرٌو</قول>
  </مقطع>
  <مقطع هوية='٢٣٠٦٦'>وَ<قول هوية='٢١٩٤٣'>أَيُّهُمْ أَبُوْكَ</قول>
  </مقطع>
  <مقطع هوية='٢١١٩٤'>لِمَا احَتَجْتَ إِلَيْهِ مِنَ الْمَعَاْنِي</مقطع>
  <مقطع هوية='٩٠٣١٧'>وَسَنَذْكُرُ ذٰلِكَ فِي بَاْبِ التَّسْوِيَةِ</مقطع>
  <مقطع هوية='٨١٧٥٩'>وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ  <آية هوية='٤٣٨١٦'>لِنَعْلَمَ أَيُّ الْحِزْبَيْنِ أَحْصَى لِمَا لَبِثُوْا أَمَدًا</آية>
  </مقطع>
  <مقطع هوية='١٨٧٩١'>وَقَوْلُهُ تَعَاْلَىْ  <آية هوية='٣٧٢٦٩'>فَلْيَنْظُرْ أَيُّهَا أَزْكَى طَعَاْمًا</آية>
  </مقطع>
  <مقطع هوية='٧٦٠٣٢'>وَمِنْ ذٰلِكَ  <قول هوية='٣٨٢٧٧'>قَدْ عَلِمْتُ لَعَبْدُ اللهِ خَيْرٌ مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٧٤٨٧٧'>فَهَذِهِ اللَّاْمُ تَمْنَعُ الْعَمَلَ كَمَا تَمْنَعُ أَلِفُ الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='١٤٢٠١'>لِأِنَّهَا إِنَّمَا هِىَ لَاْمُ الِابْتِدَاْءِ</مقطع>
  <مقطع هوية='٩٧٢٢٢'>وَإِنَّمَا أَدْخَلْتَ عَلَيْهِ  <حرف>عَلِمْتُ</حرف> لَتُؤَكِّدَ وَتَجْعَلَهُ يَقِيْنًا قَدْ عَلِمْتَهُ</مقطع>
  <مقطع هوية='٥٨٣٥٢'>وَلَا تُحِيْلَ عَلَى عِلْمِ غَيْرِكَ</مقطع>
  <مقطع هوية='٣٥٧٨٩'>كَمَا أَنَّكَ إِذَا قُلْتَ  <قول هوية='٧٠٠٦٢'>قَدْ عَلِمْتُ أَزَيْدٌ ثَمَّ أَمْ عَمْرٌو</قول>
  </مقطع>
  <مقطع هوية='٧٥٨٢٧'>أَرَدْتَ أَنْ تُخْبِرَ أَنَّكَ قَدْ عَلِمْتَ أَيُّهُمَا ثَمَّ</مقطع>
  <مقطع هوية='٢٢٠٩٢'>وَأَرْدَتَ أَنَ تُسَوِّيَ عِلْمَ الْمُخَاْطَبِ فِيْهِمَا</مقطع>
  <مقطع هوية='١٥٥٥٢'>كَمَا اسْتَوَى عِلْمُكَ فِي الْمَسْأَلَةِ حِيْنَ قُلْتَ  <قول هوية='٢٨١١٩'>أَزَيْدٌ ثَمَّ أَمْ عُمْرٌو</قول>
  </مقطع>
  <مقطع هوية='٥٥٠٣٦'>وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ  <آية هوية='٥٧٢٩١'>وَلَقَدْ عَلِمُوْا لَمَنِ اشْتَرَاْهُ مَا لَهُ فِي الْآخِرَةِ مِنْ خَلَاْقٍ</آية>
  </مقطع>
  <مقطع هوية='٨٦٨٦٢'>وَلَوْ لَمْ تَسْتَفْهِمُ وَلَمْ تُدْخِلْ لَاْمَ الِابْتِدَاْءِ لأَعْمَلْتَ  <حرف>عَلِمْتُ</حرف>
  </مقطع>
  <مقطع هوية='٨٣٥٢٢'>كَمَا تُعْمِلُ  <حرف>عَرَفْتُ</حرف> وَ<حرف>رَأَيْتُ</حرف>
  </مقطع>
  <مقطع هوية='٩٥٤٩٩'>وَذٰلِكَ قَوْلُكَ  <قول هوية='٢٥٠١١'>قَدْ عَلِمْتُ زَيْدًا خَيْرًا مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٥٩٦٢٧'>كَمَا قَاْلَ تَعَاْلَى جَدُّهُ  <آية هوية='٦٨٢٣٠'>وَلَقَدْ عَلِمْتُمُ الَّذِيْنَ اعْتَدَوْا مِنْكُمْ فِي السَّبْتِ</آية>
  </مقطع>
  <مقطع هوية='٦٥٦٤٥'>وَكَمَا قَاْلَ جَلَّ ثَنَاْؤُهُ  <آية هوية='٠٢٠٤٠'>لَا تَعْلَمُوْنَهُمُ اللهُ يَعْلَمُهُمْ</آية>
  </مقطع>
  <مقطع هوية='٥٠٥٩٠'>كَقَوْلِكَ  <قول هوية='٠٨٨٠٣'>لَا تَعْرِفُوْنَهُمْ اللهُ يَعْرِفُهُمْ</قول>
  </مقطع>
  <مقطع هوية='٣٣٤٥٧'>وَقَاْلَ سُبْحَاْنَهُ  <آية هوية='٩٠٠٤١'>وَاللّٰهُ يَعْلَمُ الْمُفْسِدَ مِنَ الْمُصْلِحِ</آية>
  </مقطع>
  <مقطع هوية='٥٨٩٧٢'>وَتَقُوْلُ  <قول هوية='٧١٣٢٧'>قَدْ عَرَفْتُ زَيْدًا أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٣٢٠١٦'>وَ<قول هوية='٩٦١٩٣'>عَلِمْتُ عَمْرًا أَأَبُوْكَ هُوَ أَمْ أَبُوْ غَيْرِكَ</قول>
  </مقطع>
  <مقطع هوية='٧٠٦٤٠'>فأَعْمَلْتَ الْفِعْلَ فِي الْاْسْمِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٤٨٢٦٦'>لِأَنَّهُ لَيْسَ بِالْمُدْخَلِ عَلَيْهِ حَرْفُ الاْسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٦٤١٢٩'>كَمَا أَنَّكَ إِذَا قُلْتَ  <قول هوية='٢٤٨٧٤'>عَبْدُ اللهِ أَأَبُوْكَ هُوَ أَمْ أَبُوْ غَيِرِكْ</قول>
  </مقطع>
  <مقطع هوية='٤١١٥٧'>أَوْ  <قول هوية='٨٩٠٥٣'>زَيْدٌ أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٩٦١٢٧'>فَالْعَاْمِلُ فِي هٰذَا الِابْتِدَاْءُ ثُمَّ اسْتَفْهَمْتَ بَعْدَهُ</مقطع>
  <مقطع هوية='١١٠٦٩'>وَمِمَّا يُقَوِّي النَّصْبَ قَوْلُكَ  <قول هوية='٩٠٤٦٦'>قَدْ عَلِمْتُهُ أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٧٠٨٨٠'>وَ<قول هوية='٦٦٨٠٠'>قَدْ عَرَفْتُكَ أَىُّ رَجُلٍ أَنْتَ</قول>
  </مقطع>
  <مقطع هوية='٠٦١٥٥'>وَتَقُوْلُ  <قول هوية='٥٤٣٧٢'>قَدْ دَرَيْتُ عَبْدَ اللهِ أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٠٨٧٠٤'>كَمَا قُلْتَ ذٰلِكَ فِي  <حرف>عَلِمْتُ</حرف>
  </مقطع>
  <مقطع هوية='٥٧٦٧١'>وَلَمْ يُؤْخَذْ ذٰلِكَ إِلَّا مِنَ الْعَرَبِ</مقطع>
  <مقطع هوية='١٨٠١٩'>وَمِنْ ذٰلِكَ  <قول هوية='٤٠٦١٨'>قَدْ ظَنَنْتُ زَيْدًا أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٨١٠٧٠'>وَإِنْ شِئْتَ قُلْتَ  <قول هوية='٧٣٩٥٩'>قَدْ عَلِمْتُ زَيْدٌ أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='١٧٥٨٢'>كَمَا تَقُوْلُ ذَاْكَ فِيْمَا لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع هوية='٦٤٦٦٣'>وَذٰلِكَ قَوْلُكَ  <قول هوية='٥٥٢٣١'>اذْهَبْ فَاْنْظُرْ زَيْدٌ أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  
  <مقطع هوية='٠٥٧٩٤'>وَلَا تَقُوْلُ  <قول هوية='٣١٨٢٠'>نَظَرْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠٢٥٦٣'>وَ<قول هوية='٣١٠٨٢'>اذْهَبْ فَسَلْ زَيْدٌ أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٤١٢٢٠'>وَإِنَّمَا الْمَعْنَى  <قول هوية='٣٧٦٦٢'>اذْهَبْ فَسَلْ عَنْ زْيَدٍ</قول>
  </مقطع>
  <مقطع هوية='٢٦٢٦٠'>وَلَوْ قُلْتَ  <قول هوية='٢٩٤٠٧'>اسْأَلْ زَيْدًا</قول> عَلَى هٰذَا الْحَدِّ لَمْ يَجُزْ</مقطع>
  <مقطع هوية='٢٧١٠٦'>وَمِثْلُ ذٰلِكَ  <حرف>دَرَيْتُ</حرف> فِي أَكْثَرِ كَلَاْمِهِمْ</مقطع>
  <مقطع هوية='٢٠٤٦٩'>لِأَنَّ أَكْثَرُهُمْ يَقُوْلُ  <قول هوية='٨٣٩٥٥'>مَا دَرَيْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٢٢٨٨١'>مِثْلَ  <قول هوية='٨٩٢٨٤'>مَا شَعَرْتُ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٨٩٧١١'>وَمِثْلُ ذٰلِكَ  <قول هوية='٠٣٧٤٥'>لَيْتَ شِعْرِي زَيْدٌ أَعِنْدَكَ هُوَ أَمْ عِنْدَ عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٧٠٧٦٣'>وَلَا بُدِّ مِنْ  <حرف>هُوَ</حرف> لِأَنَّ حَرْفَ الِاسْتِفْهَاْمِ لَا يَسْتَغْنِي بِمَا قَبْلَهُ</مقطع>
  <مقطع هوية='١٤٩١٦'>إِنَّمَا يَسْتَغْنِي بِمَا بَعْدَهُ</مقطع>
  <مقطع هوية='٨٥٩٢٩'>فَإِنَّمَا جِئْتَ بِالْفِعْلِ قَبْلَ مُبْتَدَإٍِ</مقطع>
  <مقطع هوية='١٦٢٩٨'>قَدْ وُضِعَ الِاسْتِفْهَاْمُ فِي مَوْضِعِ المَبْنِيِّ عَلَيْهِ الَّذِي يَرْفَعُهُ</مقطع>
  <مقطع هوية='٢٩٢٣٣'>فَأَدْخَلْتَهُ عَلَيْهِ كَمَا أَدْخَلْتَهُ عَلَى قَوْلِكَ  <قول هوية='٧٦٧٧٦'>قَدْ عَرَفْتُ لَزَيْدٌ خَيْرٌ مِنْكَ</قول>
  </مقطع>
  <مقطع هوية='٤٣٤٦٣'>وَإِنَّمَا جَاْزَ هٰذَا فِيْهِ مَعَ الاْسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٠٦٠٣٠'>لِأَنَّهُ فِي الْمَعْنَىْ مُسْتَفْهَمٌ عَنْهُ</مقطع>
  <مقطع هوية='٦٣٣٦٤'>كَمَا جَاْزَ لَكَ أَنْ تَقُوْلَ  <قول هوية='٥٢٠٧٩'>إِنَّ زَيْدًا فِيْهَا وَعُمْرٌو</قول>
  </مقطع>
  <مقطع هوية='٩٤٣٣٩'>وَمِثْلُهُ  <آية هوية='٧٠٥٩٦'>أَنَّ اللهَ بَرِيْءٌ مِنَ الْمُشْرِكِيْنَ وَرَسُوْلُهُ</آية>
  </مقطع>
  <مقطع هوية='٣٦٧٦٠'>فَاْبْتَدَأَ لِأَنَّ مَعْنَىْ الْحَدِيْثِ حِيْنَ قَاْلَ  <قول هوية='٦٠١٠٣'>إِنَّ زَيْدًا مُنْطَلِقٌ</قول>
  <قول هوية='٤٣٧٣٨'>زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٣٤٣٣٩'>وَلَكِنَّهُ أَكَّدَ بِـ<حرف>إِنَّ</حرف> كَمَا أَكَّدَ فَأَظْهَرَ  <حرف>زَيْدًا</حرف> وَأَضْمَرَهُ</مقطع>
  <مقطع هوية='٦٥٥٧٢'>وَالرَّفْعُ قَوْلُ يُوْنُسَ</مقطع>
  <مقطع هوية='٣٠٩٥٩'>فَإِنْ قُلْتَ  <قول هوية='٢١٩٢١'>قَدْ عَرَفْتُ أَبُوْ مَنْ زَيْدٌ</قول>
  </مقطع>
  <مقطع هوية='٨٠٧٧٦'>لَمْ يَجُزْ إِلَّا الرَّفْعُ</مقطع>
  <مقطع هوية='٦٨٩٦١'>لِأَنَّكَ بَدَأْتَ بِمَا لَا يَكُوْنُ إِلَّا اسْتِفْهَاْمًا</مقطع>
  <مقطع هوية='٤٠٨٥٣'>وَاْبْتَدَأْتَهُ ثُمَّ بَنَيْتَ عَلَيْهِ</مقطع>
  <مقطع هوية='٥٠٥٣٠'>فَهُوَ بِمَنْزِلَةِ قَوْلِكَ  <قول هوية='٢٧٠٨٩'>قَدْ عَلِمْتُ أَأَبُوْكَ زَيْدٌ أَمْ أَبُوْ عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٨٠٩٢٨'>فَإِنَّ قُلْتَ  <قول هوية='٤٩١٦٩'>قَدْ عَرَفْتُ أَبَا مَنْ زَيْدٌ مَكْنِيٌّ</قول>
  </مقطع>
  <مقطع هوية='٢٦٨٥٩'>انْتَصَبْ عَلَى  <حرف>مَكْنِيَ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٠٧١'>كَأَنَّكَ قُلْتَ  <قول هوية='١٧٢٢٩'>أَبَا مَنْ زَيْدٌ مَكْنِيٌّ</قول>
  </مقطع>
  <مقطع هوية='٩١٨٥٢'>ثُمَّ أَدْخَلْتَ  <حرف>عَرَفْتُ</حرف> عَلَيْهَا</مقطع>
  <مقطع هوية='٧٣٧٤٥'>وَمِثْلُهُ قَوْلُكَ  <قول هوية='٢٥٤٤٥'>قَدْ عَلِمْتُ أَأَبا زَيْدٍ تُكْنَىْ أَمْ أَبَا عَمْرِوٍ</قول>
  </مقطع>
  <مقطع هوية='٢٦٥١٢'>كَأَنَّكَ قُلْتَ  <قول هوية='٠٢٠٣٧'>أَأَبا زَيْدٍ تُكْنَىْ أَمْ أَبَا عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٠٩٦٨٨'>ثُمَّ أَدْخَلَتَ عَلَيْهِ  <حرف>عَلِمْتُ</حرف>
  </مقطع>
  <مقطع هوية='٠٧١٢٠'>كَمَا أَدْخَلْتَهُ عَلَيْهِ حِيْنَ لَمْ يَكُنْ مَا بَعْدَهُ إِلَّا مُبْتَدِأٌ</مقطع>
  <مقطع هوية='٩٢٥٦٨'>فَلَا يَنْتَصِبُ إِلَّا بِهٰذَا الْفِعْلِ الْآخِرِ</مقطع>
  <مقطع هوية='٦٧٧٩١'>كَمَا لَمْ يَكُنْ فِي الْأَوَّلِ إِلَّا مُبْتَدَأٌ</مقطع>
  <مقطع هوية='١٠٧٣٨'>وَإِذَا قُلْتَ  <قول هوية='٨٤٣١٠'>قَدْ عَرَفْتُ زَيْدًا أَبُوْ مَنْ هُوَ</قول> قُلْتَ  <قول هوية='٠٢٩٢٨'>قَدْ عَرَفْتُ زَيْدًا أَبَا مَنْ هُوَ مَكْنِيٌّ</قول>
  </مقطع>
  <مقطع هوية='٠٥١٩٨'>وَمَنْ رَفَعَ  <حرف>زَيْدٍ</حرف> ثَمَّةَ رَفَعَ  <حرف>زَيْدًا</حرف> هَاْهُنَا</مقطع>
  <مقطع هوية='٠١٣٦٦'>وَنَصَبَ الْآخِرَ كَمَا نَصَبَهُ حِيْنَ قَاْلَ  <قول هوية='٧٧٠٦٦'>قَدْ عَرَفْتُ أَبَا مَنْ أَنْتَ مَكْنِيٌّ</قول>
  </مقطع>
  <مقطع هوية='٦١٠١٠'>وَكَأَنَّهُ قَاْلَ  <قول هوية='١٢٣١٣'>زَيْدٌ أَبَا مَنْ هُوَ مَكْنِيّ</قول>
  </مقطع>
  <مقطع هوية='١٨٣١٦'>ثُمَّ أَدْخَلَ الْفِعْلَ عَلَيْهِ</مقطع>
  <مقطع هوية='١٠٧٩٣'>وَكَأَنَّهُ قَاْلَ  <قول هوية='٨٣٨٦٨'>زَيْدٌ أَأَبا بِشْرٍ يُكْنَىْ أَمْ أَبَا عَمْرٍو</قول>
  </مقطع>
  <مقطع هوية='٥١٤٣٥'>ثُمَّ أَدْخَلَ الْفِعْلَ عَلَيْهِ وَعَمِلَ الْفِعْلُ الْآخِرُ حِيْنَ كَاْنَ بَعْدَ أَلْفِ الِاسْتِفْهَاْمِ</مقطع>
  <مقطع هوية='٢٩٢٢٩'>وَتَقُوْلُ  <قول هوية='٠٨٠٤١'>قَدْ عَرَفْتُ زَيْدًا أَبُوْ أَيِّهِمْ يُكْنَىْ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٤٦٠٦٠'>وَ<قول هوية='٠٩٠٨٤'>عَلَمْتُ بِشْرًا أَيُّهُمْ يُكْنَىْ بِهِ</قول>
  </مقطع>
  <مقطع هوية='٣٥١٨٨'>تَرْفَعُهُ كَمَا تَرْفَعُ  <قول هوية='٠٤٦٤٢'>أَيُّهُمْ ضَرَبْتَهُ</قول>
  </مقطع>
  <مقطع هوية='٠٣٥٨٢'>وَتَقُوْلُ  <قول هوية='٩٣٨٧٢'>أَرَأَيْتَكَ زَيْدًا أَبُوْ مَنْ هُوَ</قول>
  </مقطع>
  <مقطع هوية='٨٦١٠١'>وَ<قول هوية='٠٥٧٣٧'>أَرَأَيْتَكَ عَمْرًا أَعِنْدَكَ هُوَ أَمْ عِنْدَ فُلَاْنٍ</قول>
  </مقطع>
  <مقطع هوية='٥٠٩٦٠'>لَا يَحْسُنُ فِيْهِ إِلَّا النَّصْبُ فِي  <حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع هوية='٢٧٢٩٤'>أَلَا تَرَىْ أَنَّكَ لَوْ قُلْتَ  <قول هوية='١٩٩٩٤'>أَرَأَيْتَ أَبُوْ مَنْ أَنْتَ</قول>
  </مقطع>
  <مقطع هوية='٣٦٠٦٢'>أَوْ  <قول هوية='٨٧٧٢٣'>أَرَأَيْتَ أَزَيْدٌ ثَمَّ أَمْ فُلَاْنٌ</قول>
  </مقطع>
  <مقطع هوية='٥٠٠٣٧'>لَمْ يَحْسُنُ لِأَنَّ فِيْهِ مَعْنَىْ  <قول هوية='٠٧٧١١'>أَخْبِرْنِيْ عَنْ زَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='١٧٥٣٧'>وَهُوَ الْفِعْلُ لَا يَسْتَغْنِي السَّكُوْتُ عَلَى مَفْعُوْلِهِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٧٠٠٠٥'>فَدُخُوْلُ هٰذَا الْمَعْنَىْ فِيْهِ لَمْ يَجْعَلُهُ بِمَنْزِلَةِ  <حرف>أَخْبِرْنِي</حرف> فِي الِاسْتِغْنَاْءِ</مقطع>
  <مقطع هوية='٦٠٨١٦'>فَعَلَى هٰذَا أُجْرِيَ وَصَاْرَ الِاسْتِفْهَاْمُ فِي مَوْضِعِ الْمَفْعُوْلِ الثَّاْنِي</مقطع>
  <مقطع هوية='١٦٥١١'>وَتَقُوْلُ  <قول هوية='١٣٣٢٨'>قَدْ عَرَفْتُ أَىَّ يَوْمٍ الْجُمَعَةُ</قول>
  </مقطع>
  <مقطع هوية='٦٣٧٣٥'>فَتَنْصِبُ عَلَى أَنَّهُ ظَرْفٌ لَا عَلَى  <حرف>عَرَفْتُ</حرف>
  </مقطع>
  <مقطع هوية='٧٩٧٤٢'>وَإِنْ لَمْ تَجْعَلْهُ ظَرْفًا رَفَعْتَ</مقطع>
  <مقطع هوية='٤٩٦٣٢'>وَبَعْضُ الْعَرَبِ يَقُوْلُ  <قول هوية='٣٦١١٣'>لَقَدْ عَلِمْتُ أَىَّ حِيْنٍ عُقْبَتِيْ</قول>
  </مقطع>
  <مقطع هوية='٩٤١١٧'>وَبَعْضُهُمْ يَقُوْلُ  <قول هوية='٨٥٠٦٦'>لَقَدْ عَلِمْتُ أَىُّ حِيْنٍ عُقْبَتِيْ</قول>
  </مقطع>
  <مقطع هوية='١٣٩٠٨'>وَأَمَّا قَوْلُهُ</مقطع>
  <شاهدة هوية='١٤٨٥٣'>
    <بيت>
      <مصراع>حَتَّى كَأَنَّ لَمْ يَكُنْ إِلَّا تَذَكُّرُهُ</مصراع>
      <مصراع>وَالدَّهْرُ أَيَّتَمَا حَاْلٍ دَهَاْرِيْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٢٠٠٤٢'>فَإِنَّمَا هُوَ بِمَنْزِلَةِ قَوْلِكَ  <قول هوية='٣٣٠٤١'>وَالدَّهْرُ دَهَاْرِيْرُ كَلَّ حَاْلٍ وَكُلَّ مَرَّةٍ</قول>
  </مقطع>
  <مقطع هوية='٧١٩٢٥'>أَيْ  <قول هوية='٣٤٦٦٩'>في كُلِّ حَاْلٍ وَفِي كُلِّ مَرَّةٍ</قول>
  </مقطع>
  <مقطع هوية='٣٣١٤٩'>فَاْنْتَصَبَ لِأَنَّهُ ظَرْفٌ</مقطع>
  <مقطع هوية='٤٠٥٣٠'>كَمَا تَقُوْلُ  <قول هوية='٣٠٩٦١'>الْقِتَاْلُ كُلَّ مَرَّةٍ وَكُلَّ أَحْوَالِ الدَّهْرِ</قول>
  </مقطع>

