<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٣"
     درنبورج="١-٧٧"
     البكاء="١-٢٥٦"
     هارون="١-١٨١"
     يعقوب="١-٢٤١"
     رقم="٣٩">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ صَارَ الْفَاعِلُ فِيْهِ بِمَنْزِلَةِ <حرف>الَّذِي فَعَلَ</حرف>
    </مقطع>
    <مقطع رقم="٢">في الْمَعْنَى وَمَا يَعْمَلُ فِيْهِ</مقطع>
  </عنوان>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ <قول رقم="١">هٰذَا الضَّارِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤">فَصَارَ في مَعْنَى <قول رقم="٢">هٰذَا الَّذِي ضَرَبَ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٥">وَعَمِلَ عَمَلَهُ</مقطع>
  <مقطع رقم="٦">لِأَنَّ الْأَلِفَ وَاللَّامَ مَنَعَتَا الْإِضَافَةَ</مقطع>
  <مقطع رقم="٧">وَصَارَتَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٨">وَكَذٰلِكَ <قول رقم="٣">هٰذَا الضَّارِبُ الرَّجُلَ</قول>
  </مقطع>
  <مقطع رقم="٩">وَهُوَ وَجْهُ الْكَلَامِ</مقطع>
  <مقطع رقم="١٠">وَقَدْ قَالَ قَوْمٌ مِنْ الْعَرَبِ تُرْضَى عْرَبِيَّتُهُمْ</مقطع>
  <مقطع رقم="١١">
    <قول رقم="٤">هٰذَا الضَّارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="١٢">شَبَّهُوْهُ بِـ<حرف>الْحَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="١٣">وَإِنْ كَانَ لَيْسَ مِثْلَهُ في الْمَعْنَى وَلَا في أَحْوَاْلِهِ</مقطع>
  <مقطع رقم="١٤">إِلَا أَنَّهُ اسْمٌ كَأَنَّهُ اسْمٌ</مقطع>
  <مقطع رقم="١٥">وَقَدْ يَجُرُّ كَمَا يَجُرُّ وَيَنْصِبُ كَمَا يَنْصِبُ</مقطع>
  <مقطع رقم="١٦">وَسَيُبَيَّنُ ذٰلِكَ في بِابِهِ إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٧">وَقَدْ يُشَبِّهُوْنَ الشَّيْءَ بِالشَّيْءِ وَلَيْسَ مِثْلَهُ في جَمِيْعِ أَحْوَاْلِهِ</مقطع>
  <مقطع رقم="١٨">وَسَتَرَى ذٰلِكَ في كَلَامِهِمْ كَثِيْرًا</مقطع>
  <مقطع رقم="١٩">وَقَالَ الْمَرَّارُ الْأَسَدِيُّ</مقطع>
  <شاهدة مقطع="٢٠" رقم="١">
    <بيت>
      <مصراع>أَنَا ابْنُ التَّاْرِكِ الْبَكْرِيِّ بِشْرٍ</مصراع>
      <مصراع>عَلَيْهِ الطَّيْرُ تَرْقُبُهُ وُقُوْعًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢١">سَمِعْنَاْهُ مِمَّنْ يَرْوِيْهِ عَنِ الْعَرَبِ</مقطع>
  <مقطع رقم="٢٢">وَأَجْرَى <حرف>بِشْرًا</حرف> عَلَى مَجْرَى الْمَجْرُوْرِ</مقطع>
  <مقطع رقم="٢٣">لِأَنَّهُ جَعَلَهُ بِمَنْزِلَةِ مَا يُكَفُّ مِنْهُ التَّنْوِيْنُ</مقطع>
  <مقطع رقم="٢٤">وَمِثْلُ ذٰلِكَ في الْإِجْرَاءِ عَلَى مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٢٥">
    <قول رقم="٥">هُوَ الضَّارِبُ زَيْدًا وَالرَّجُلَ</قول>
  </مقطع>
  <مقطع رقم="٢٦">لَا يَكُوْنُ فِيْهِ إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="٢٧">لِأَنَّهُ عَمِلَ فِيْهِمَا عَمَلَ الْمُنَوَّنِ</مقطع>
  <مقطع رقم="٢٨">وَلَا يَكُوْنُ <قول رقم="٦">هُوَ الضَّارِبُ عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٢٩">كَمَا لَا يَكُوْنُ <قول رقم="٧">هُوَ الْحَسَنُ وَجْهٍ</قول>
  </مقطع>
  <مقطع رقم="٣٠">وَمَنْ قَالَ <قول رقم="٨">هٰذَا الضَّاْرِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣١">قَالَ <قول رقم="٩">هُوَ الضَّارِبُ الرَّجُلِ وَعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٣٢">وَمِنْ ذٰلِكَ إِنْشَادُ بَعْضِ الْعَرَبِ قَوْلَ الْأَعْشَى</مقطع>
  <شاهدة مقطع="٣٣" رقم="٢">
    <بيت>
      <مصراع>الْوَاهِبُ الْمِائَةِ الْهِجَاْنِ وَعَبْدِهَا</مصراع>
      <مصراع>عُوْذًا تُزَجَّى بَيْنَهَا أَطْفَاْلُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٤">وَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ فَأَثْبَتَّ النُّوْنَ</مقطع>
  <مقطع رقم="٣٥">قُلْتَ <قول رقم="١٠">هٰذَاْنِ الضَّاْرِبَاْنِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٦">وَ<قول رقم="١١">هٰؤُلَاءِ الضَّاْرِبُوْنَ الرَّجُلَ</قول>
  </مقطع>
  <مقطع رقم="٣٧">لَا يَكُوْنُ فِيْهِ غَيْرُ هٰذَا لِأَنَّ النُّوْنَ ثَاْبِتَةٌ</مقطع>
  <مقطع رقم="٣٨">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="٣٩">
    <آية>وَالْمُقِيْمِيْنَ الصَّلوٰةَ وَالْمُؤْتُوْنَ الزَّكَوٰةَ</آية>
  </مقطع>
  <مقطع رقم="٤٠">وَقَالَ ابْنُ مُقْبِلٍ</مقطع>
  <شاهدة مقطع="٤١" رقم="٣">
    <بيت>
      <مصراع>يَا عَيْنِ بَكِّي حُنَيْفًا رَأَسَ حَيِّهِمْ</مصراع>
      <مصراع>الْكَاسِرِينَ الْقَنَا في عَوْرَةِ الدُّبُرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٢">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
  <مقطع رقم="٤٣">وَصَارَ الِاسْمُ دَاْخِلًا في الجَاْرِّ وَ بَدَلًا مِنَ النُّوْنِ</مقطع>
  <مقطع رقم="٤٤">لِأَنَّ النُّوْنَ لَا تُعَاْقِبُ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع رقم="٤٥">وَلَمْ تَدْخُلْ عَلَى الِاسْمِ بَعْدَ أَنْ ثَبَتَتْ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٤٦">لِأَنَّهُ لَا يَكُوْنُ وَاْحِدًا مَعْرُوْفًا ثُمَّ يُثَنَّى</مقطع>
  <مقطع رقم="٤٧">فَالتَّنْوِيْنُ قَبْلَ الْأَلِفِ وَاللَّامِ لِأَنَّ الْمَعْرِفَةَ بَعْدَ النَّكِرَةِ</مقطع>
  <مقطع رقم="٤٨">فَالنُّوْنُ مَكْفُوْفَةٌ وَالْمَعْنَى مَعْنَى ثَبَاْتِ النُّوْنِ</مقطع>
  <مقطع رقم="٤٩">كَمَا كَاْنَ ذٰلِكَ في الِاسْمِ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَاْرِعِ</مقطع>
  <مقطع رقم="٥٠">وَذٰلِكَ قَوْلُكَ <قول رقم="١٢">هُمَا الضَاْرِبَا زَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٥١">وَ<قول رقم="١٣">
  <تقدير>هُمُ</تقدير> الضَاْرْبُو عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٥٢">وَقَالَ الْفَرَزْدَقُ</مقطع>
  <شاهدة مقطع="٥٣" رقم="٤">
    <بيت>
      <مصراع>أُسَيِّدُ ذُو خُرَيِّطَةٍ نَهَاْرًا</مصراع>
      <مصراع>مِنَ الْمُتَلقِّطِي قَرَدِ الْقُمَاْمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٤">وَقَالَ رَجُلٌ مِنْ بَنِي ضَبَّةَ</مقطع>
  <شاهدة مقطع="٥٥" رقم="٥">
    <بيت>
      <مصراع>الْفَاْرِجِي بَاْبِ الْأَمِيرِ الْمُبْهَمِ</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٦">وَقَالَ رَجُلٌ مِنَ الْأَنْصَارِ</مقطع>
  <شاهدة مقطع="٥٧" رقم="٦">
    <بيت>
      <مصراع>الْحَاْفِظُو عَوْرَةَ الْعَشِيرَةِ لَا</مصراع>
      <مصراع>يَأْتِيْهِمْ مَنْ وَرَاْئَنَا نَطَفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٨">لَمْ يَحْذِفُ النُّوْنَ لِلْإِضَافَةِ</مقطع>
  <مقطع رقم="٥٩">وَلَا لِيُعَاقِبَ الْاسْمُ النُّوْنَ</مقطع>
  <مقطع رقم="٦٠">وَلَكِنْ حَذَفُوْهَا كَمَا حَذَفُوْهَا مِنَ <حرف>اللَّذَيْنِ</حرف> وَ<حرف>الَّذِينَ</حرف>
  </مقطع>
  <مقطع رقم="٦١">حَيْثُ طَالَ الْكَلَامُ</مقطع>
  <مقطع رقم="٦٢">وَكَانَ الِاسْمُ الْأَوَّلُ مُنْتَهَاهُ الْاسْمُ الْآخِرُ</مقطع>
  <مقطع رقم="٦٣">وَقَالَ الْأَخْطَلُ</مقطع>
  <شاهدة مقطع="٦٤" رقم="٧">
    <بيت>
      <مصراع>أَبَنِي كُلَيْبٍ إِنَّ عَمَّيَّ اللَّذَا</مصراع>
      <مصراع>سَلَبَا الْمُلُوْكَ وَفَكَّكَا الْأَغْلَالَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٥">لِأَنَّ مَعْنَاهُ مَعْنَى <حرف>الَّذِيْنَ فَعَلُوْا</حرف>
  </مقطع>
  <مقطع رقم="٦٦">وَهُوَ مَعَ الْمَفْعُولِ بِمَنْزِلَةِ اسْمٍ مُفْرَدٍ</مقطع>
  <مقطع رقم="٦٧">لَمْ يَعْمَلْ في شَيْءٍ</مقطع>
  <مقطع رقم="٦٨">كَمَا أَنَّ <حرف>الَّذِيْنَ فَعَلُوْا</حرف> مَعَ صِلَتِهِ بِمَنْزِلَةِ اسْمٍ</مقطع>
  <مقطع رقم="٦٩">وَقَالَ أَشْهَبُ بِنُ رُمَيْلَةَ</مقطع>
  <شاهدة مقطع="٧٠" رقم="٨">
    <بيت>
      <مصراع>وَإِنَّ الَّذِي حَاْنِتْ بِفَلْجٍ دِمَاؤُهُمْ</مصراع>
      <مصراع>هُمُ الْقَوْمُ كُلُّ الْقَوْمِ يَا أُمَّ خَاْلِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧١">وَإِذَا قُلْتَ <قول رقم="١٤">هُمُ الضَّاْرِبُوْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٢">وَ<قول رقم="١٥">هُمَا الضَّارِبَاْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٣">فَالْوَجْهُ فِيْهِ الْجَرُّ</مقطع>
  <مقطع رقم="٧٤">لِأَنَّكَ إِذَا كَفَفْتَ النَّوْنَ مِنْ هَذِهِ الْأَسْمَاْءِ في الْمَظْهَرِ</مقطع>
  <مقطع رقم="٧٥">كَانَ الْوَجْهُ الْجَرُّ إِلَّا في قَوْلِ مَنْ قَالَ <قول رقم="١٦">الْحَاْفِظُو عَوْرَةَ الْعَشِيرَةِ</قول>
  </مقطع>
  <مقطع رقم="٧٦">وَلَا يَكُوْنُ في قَوْلِهِمْ <قول رقم="١٧">هُمْ ضَاْرِبُوْكَ</قول>
  </مقطع>
  <مقطع رقم="٧٧">أَنْ تَكُوْنَ الْكَاْفُ في مَوْضِعِ النَّصْبِ</مقطع>
  <مقطع رقم="٧٨">لِأَنَّكَ لَوْ كَفَفْتَ النُّوْنَ في الْإِظْهَاْرِ لَمْ يَكُنْ إِلَّا جَرًّا</مقطع>
  <مقطع رقم="٧٩">وَلَا يَجُوْزُ في الْإِظْهَارِ <قول رقم="١٨">هُمْ ضَارِبُو زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٨٠">لِأَنَّهَا لَيْسَتْ في مَعْنَى <حرف>الَّذِي</حرف>
  </مقطع>
  <مقطع رقم="٨١">لِأَنَّهَا لَيْسَتْ فِيْهَا الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٨٢">كَمَا كَانَتْ في <حرف>الَّذِي</حرف>
  </مقطع>
  <مقطع رقم="٨٣">وَاعْلَمْ أَنَّ حَذْفَ النُّوْنِ وَالتَّنْوِيْنِ</مقطع>
  <مقطع رقم="٨٤">لَازِمٌ مَعَ عَلَامَةِ الْمُضْمَرِ غَيْرِ الْمُنْفَصِلِ</مقطع>
  <مقطع رقم="٨٥">لِأَنَّهُ لَا يُتَكَلَّمُ بِهِ مُفْرَدًا</مقطع>
  <مقطع رقم="٨٦">حَتَّى يَكُوْنَ مُتَّصِلًا بِفِعْلٍ قَبْلَهُ</مقطع>
  <مقطع رقم="٨٧">أَوْ بِاسْمٍ فِيْهِ ضَمِيْرٌ</مقطع>
  <مقطع رقم="٨٨">فَصَارَ كَأَنَّهُ النُّوْنُ وَالتَّنْوِيْنُ في الْاِسْمِ</مقطع>
  <مقطع رقم="٨٩">لِأَنَّهُمَا لَا يَكُوْنَانِ إِلَّا زَوَائِدُ</مقطع>
  <مقطع رقم="٩٠">وَلَا يَكُوْنَانِ إِلَّا في أَوَاخِرِ الْحُرُوْفِ</مقطع>
  <مقطع رقم="٩١">وَالْمُظْهَرُ وَإِنْ كَانَ يُعَاقِبُ النُّوْنَ وَالتَّنْوِينَ</مقطع>
  <مقطع رقم="٩٢">فَإِنَّهُ لَيْسَ كَعَلَامَةِ الْمُضْمَرِ الْمُتَّصَلِ</مقطع>
  <مقطع رقم="٩٣">لِأَنَّهُ اسْمٌ يَنْفَصِلُ وَيُبْتَدَأُ</مقطع>
  <مقطع رقم="٩٤">وَلَيْسَ كَعَلَامَةِ الْإِضْمَارِ</مقطع>
  <مقطع رقم="٩٥">لِأَنَّهَا في اللَّفْظِ كَالْنُّوْنِ</مقطع>
  <مقطع رقم="٩٦">فَهِيَ أَقَرَبُ إِلَيْهَا مِنْ الْمُظْهَرِ</مقطع>
  <مقطع رقم="٩٧">اجْتَمَعَ فِيْهَا هٰذَا وَالْمُعَاقِبَةُ</مقطع>
  <مقطع رقم="٩٨">وَقَدْ جَاءَ في الشِّعْرِ وَزَعَمُوْا أَنَّهُ مَصْنُوْعٌ</مقطع>
  <شاهدة مقطع="٩٩" رقم="٩">
    <بيت>
      <مصراع>هُمُ الْقَاْئِلُوْنَ الْخَيْرَ وَالْآمِرُوْنَهُ</مصراع>
      <مصراع>إِذَا مَا خَشُوْا مِنْ مُحْدَثِ الْأَمْرِ مُعْظَمَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠٠">وَقَالَ</مقطع>
  <شاهدة مقطع="١٠١" رقم="١٠">
    <بيت>
      <مصراع>وَلَمْ يَرْتَفِقْ وَالنَّاْسُ مُحْتَضِرُوْنَهُ</مصراع>
      <مصراع>جَمِيْعًا وَأَيْدِي الْمُعْتَفِيْنَ رَوَاْهِقُهْ</مصراع>
    </بيت>
  </شاهدة>
