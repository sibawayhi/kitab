<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٣"
     درنبورج="١-٧٧"
     البكاء="١-٢٥٦"
     هارون="١-١٨١"
     يعقوب="١-٢٤١"
     رقم="٣٩">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ صَارَ الْفَاعِلُ فِيْهِ بِمَنْزِلَةِ <حرف>الَّذِي فَعَلَ</حرف>
    </مقطع>
    <مقطع رقم="٢">في الْمَعْنَىْ وَمَا يَعْمَلُ فِيْهِ</مقطع>
  </عنوان>
  <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ <قول رقم="١">هٰذَا الضَّارِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤">فَصَارَ في مَعْنَى <قول رقم="٢">هٰذَا الَّذِي ضَرَبَ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٥">وَعَمِلَ عَمَلَهُ</مقطع>
  <مقطع رقم="٦">لِأَنَّ الْأَلِفَ وَاللَّامَ مَنَعَتَا الْإِضَافَةَ</مقطع>
  <مقطع رقم="٧">وَصَارَتَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٨">وَكَذٰلِكَ <قول رقم="٣">هٰذَا الضَّارِبُ الرَّجُلَ</قول>
  </مقطع>
  <مقطع رقم="٩">وَهُوَ وَجْهُ الْكَلَامِ</مقطع>
  <مقطع رقم="١٠">وَقَدْ قَالَ قَوْمٌ مِنْ الْعَرَبِ تُرْضَى عْرَبِيَّتُهُمْ</مقطع>
  <مقطع رقم="١١">
    <قول رقم="٤">هٰذَا الضَّارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="١٢">شَبَّهُوْهُ بِـ<حرف>الْحَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="١٣">وَإِنْ كَانَ لَيْسَ مِثْلَهُ في الْمَعْنَى وَلَا في أَحْوَاْلِهِ</مقطع>
  <مقطع رقم="١٤">إِلَا أَنَّهُ اسْمٌ كَأَنَّهُ اسْمٌ</مقطع>
  <مقطع رقم="١٥">وَقَدْ يَجُرُّ كَمَا يَجُرُّ وَيَنْصِبُ كَمَا يَنْصِبُ</مقطع>
  <مقطع رقم="١٦">وَسَيُبَيَّنُ ذٰلِكَ في بِابِهِ إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="١٧">وَقَدْ يُشَبِّهُوْنَ الشَّيْءَ بِالشَّيْءِ وَلَيْسَ مِثْلَهُ في جَمِيْعِ أَحْوَاْلِهِ</مقطع>
  <مقطع رقم="١٨">وَسَتَرَى ذٰلِكَ في كَلَامِهِمْ كَثِيْرًا</مقطع>
  <مقطع رقم="١٩">وَقَالَ الْمَرَّارُ الْأَسَدِيُّ</مقطع>
  <شاهدة رقم="١" xml:id="٣٩-1">
    <بيت>
      <مصراع>أَنَا ابْنُ التَّاْرِكِ الْبَكْرِيِّ بِشْرٍ</مصراع>
      <مصراع>عَلَيْهِ الطَّيْرُ تَرْقُبُهُ وُقُوْعًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٠">سَمِعْنَاْهُ مِمَّنْ يَرْوِيْهِ عَنِ الْعَرَبِ</مقطع>
  <مقطع رقم="٢١">وَأَجْرَى <حرف>بِشْرًا</حرف> عَلَى مَجْرَى الْمَجْرُوْرِ</مقطع>
  <مقطع رقم="٢٢">لِأَنَّهُ جَعَلَهُ بِمَنْزِلَةِ مَا يُكَفُّ مِنْهُ التَّنْوِيْنُ</مقطع>
  <مقطع رقم="٢٣">وَمِثْلُ ذٰلِكَ في الْإِجْرَاءِ عَلَى مَا قَبْلَهُ</مقطع>
  <مقطع رقم="٢٤">
    <قول رقم="٥">هُوَ الضَّارِبُ زَيْدًا وَالرَّجُلَ</قول>
  </مقطع>
  <مقطع رقم="٢٥">لَا يَكُوْنُ فِيْهِ إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="٢٦">لِأَنَّهُ عَمِلَ فِيْهِمَا عَمَلَ الْمُنَوَّنِ</مقطع>
  <مقطع رقم="٢٧">وَلَا يَكُوْنُ <قول رقم="٦">هُوَ الضَّارِبُ عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٢٨">كَمَا لَا يَكُوْنُ <قول رقم="٧">هُوَ الْحَسَنُ وَجْهٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩">وَمَنْ قَالَ <قول رقم="٨">هٰذَا الضَّاْرِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣٠">قَالَ <قول رقم="٩">هُوَ الضَّارِبُ الرَّجُلِ وَعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٣١">وَمِنْ ذٰلِكَ إِنْشَادُ بَعْضِ الْعَرَبِ قَوْلَ الْأَعْشَى</مقطع>
  <شاهدة رقم="٢" xml:id="٣٩-2">
    <بيت>
      <مصراع>الْوَاهِبُ الْمِائَةِ الْهِجَاْنِ وَعَبْدِهَا</مصراع>
      <مصراع>عُوْذًا تُزَجَّى بَيْنَهَا أَطْفَاْلُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٢">وَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ فَأَثْبَتَّ النُّوْنَ</مقطع>
  <مقطع رقم="٣٣">قُلْتَ <قول رقم="١٠">هٰذَاْنِ الضَّاْرِبَاْنِ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَ<قول رقم="١١">هٰؤُلَاءِ الضَّاْرِبُوْنَ الرَّجُلَ</قول>
  </مقطع>
  <مقطع رقم="٣٥">لَا يَكُوْنُ فِيْهِ غَيْرُ هٰذَا لِأَنَّ النُّوْنَ ثَاْبِتَةٌ</مقطع>
  <مقطع رقم="٣٦">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ <آية>وَالْمُقِيْمِيْنَ الصَّلوٰةَ وَالْمُؤْتُوْنَ الزَّكَوٰةَ</آية>
  </مقطع>
  <مقطع رقم="٣٧">وَقَالَ ابْنُ مُقْبِلٍ</مقطع>
  <شاهدة رقم="٣" xml:id="٣٩-3">
    <بيت>
      <مصراع>يَا عَيْنِ بَكِّي حُنَيْفًا رَأَسَ حَيِّهِمْ</مصراع>
      <مصراع>الْكَاسِرِينَ الْقَنَا في عَوْرَةِ الدُّبُرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٨">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
  <مقطع رقم="٣٩">وَصَارَ الْاسْمُ دَاخِلًا في الجَارِّ وَ بَدَلًا مِنَ النُّوْنِ</مقطع>
  <مقطع رقم="٤٠">لِأَنَّ النُّوْنَ لَا تُعَاقِبُ الْأَلْفَ وَاللامَ</مقطع>
  <مقطع رقم="٤١">وَلَمْ تَدْخُلْ عَلَى الاسْمِ بَعْدَ أَنْ ثَبَتَتْ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٤٢">لِأَنَّهْ لَا يَكُوْنُ وَاحِدًا مَعْرُوْفًا ثُمَّ يُثَنَّى</مقطع>
  <مقطع رقم="٤٣">فَالتَّنْوِيْنُ قَبْلَ الْأَلِفِ وَالْلَّامِ لِأَنَّ الْمَعْرِفَةَ بَعْدَ النَّكِرَةُ</مقطع>
  <مقطع رقم="٤٤">فَالنُّوْنُ مَكْفُوْفَةٌ وَالْمَعْنَى مَعْنَى ثَبَاتِ النُّوْنِ</مقطع>
  <مقطع رقم="٤٥">كَمَا كَانَ ذٰلِكَ في الْاِسْمِ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ</مقطع>
  <مقطع رقم="٤٦">وَذٰلِكَ قَوْلُكَ <قول رقم="١٢">هُمَا الضَارِبَا زَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٤٧">وَ<قول رقم="١٣">
  <تقدير>هُمُ </تقدير> الضَارْبُو عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٤٨">وَقَالَ الْفَرَزْدَقُ</مقطع>
  <شاهدة رقم="٤" xml:id="٣٩-4">
    <بيت>
      <مصراع>أسَيدُ ذُوْ خَرِيطَةً نَهَارا</مصراع>
      <مصراع>مِنَ الْمُتلقِطّىْ قَرَدِ الْقُمَامِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٩">وَقَالَ رَجُلٌ مِنْ بَنِي ضَبَّةَ</مقطع>
  <شاهدة رقم="٥" xml:id="٣٩-5">
    <بيت>
      <مصراع>الفَارْجَىْ بَابِ الْأَمِيرِ الْمُبْهَمِ</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٠">وَقَالَ رَجُلٌ مِنَ الْأَنْصَارِ</مقطع>
  <شاهدة رقم="٦" xml:id="٣٩-6">
    <بيت>
      <مصراع>الَحَافِظُوَ عَوْرَةَ الْعَشِيرَةِ لًا</مصراع>
      <مصراع>يَأْتِيَهِمُ مِنْ وَرَائِنَا نُطفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥١">لَمْ يَحْذِفُ النُّوْنَ لِلْإِضَافَةِ</مقطع>
  <مقطع رقم="٥٢">وَلَا لِيُعَاقِبَ الْاسْمُ النُّوْنَ</مقطع>
  <مقطع رقم="٥٣">وَلَكِنْ حَذَفُوْهَا كَمَا حَذَفُوْهَا مِنَ <حرف>اللَّذَيْنِ</حرف> وَ<حرف>الَّذِينَ</حرف>
  </مقطع>
  <مقطع رقم="٥٤">حَيْثُ طَالَ الْكَلَامُ</مقطع>
  <مقطع رقم="٥٥">وَكَانَ الِاسْمُ الْأَوَّلُ مُنْتَهَاهُ الْاسْمُ الْآخِرُ</مقطع>
  <مقطع رقم="٥٦">وَقَالَ الْأَخْطَلُ</مقطع>
  <شاهدة رقم="٧" xml:id="٣٩-7">
    <بيت>
      <مصراع>أَبَنِى كُلَيْبٍ إِنَّ عَمَّىَّ اللَّذًا</مصراع>
      <مصراع>سَلَبَا الْمُلُوْكَ وَفَكَّكَا الْأَغْلَالْا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٧">لِأَنَّ مَعْنَاهُ مَعْنَى <حرف>الَّذِيْنَ فَعَلُوْا</حرف>
  </مقطع>
  <مقطع رقم="٥٨">وَهُوَ مَعَ الْمَفْعُولِ بِمَنْزِلَةِ اسْمٍ مُفْرَدٍ</مقطع>
  <مقطع رقم="٥٩">لَمْ يَعْمَلْ في شَيْءٍ</مقطع>
  <مقطع رقم="٦٠">كَمَا أَنَّ <حرف>الَّذِيْنَ فَعَلُوْا</حرف> مَعَ صِلَتِهِ بِمَنْزِلَةِ اسْمَ</مقطع>
  <مقطع رقم="٦١">وَقَالَ أَشْهَبُ بِنُ رُمَيْلَةَ</مقطع>
  <شاهدة رقم="٨" xml:id="٣٩-8">
    <بيت>
      <مصراع>وَإِنْ الَّذِىْ حَانِتْ بِفَلْجٍ دِمَاؤُهُمْ</مصراع>
      <مصراع>هُمُ الْقَوْمُ كُلُّ الْقَوْمِ يَا أُمَّ خَالِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٢">وَإِذَا قُلْتَ <قول رقم="١٤">هُمْ الضَارِبُوكَ</قول>
  </مقطع>
  <مقطع رقم="٦٣">وَ<قول رقم="١٥">هُمَا الضَّارِبَاكَ</قول>
  </مقطع>
  <مقطع رقم="٦٤">فَالْوَجْهُ فِيْهِ الْجَرُّ</مقطع>
  <مقطع رقم="٦٥">لِأَنَّكَ إِذَا كَفَفْتَ النَّوْنَ مِنْ هَذِهِ الْأَسْمَاءِ في الْمَظْهَرِ</مقطع>
  <مقطع رقم="٦٦">كَانَ الْوَجْهُ الْجَرُّ إِلَّا في قَوْلِ مَنْ قَالَ <قول رقم="١٦">الَحَافِظُو عَوْرَةَ الْعَشِيرَةِ</قول>
  </مقطع>
  <مقطع رقم="٦٧">وَلَا يَكُوْنُ في قَوْلِهِمْ <قول رقم="١٧">هُمْ ضَارِبُوْكَ</قول>
  </مقطع>
  <مقطع رقم="٦٨">أَنْ تَكُوْنَ الْكَافُ في مَوْضِعِ النَّصْبِ</مقطع>
  <مقطع رقم="٦٩">لِأَنَّكَ لَوْ كَفَفْتَ النُّوْنِ في الْإِظْهَارِ لَمْ يَكُنْ إِلَّا جَرًّا</مقطع>
  <مقطع رقم="٧٠">وَلَا يَجُوْزُ في الْإِظْهَارِ <قول رقم="١٨">هُمْ ضَارِبُو زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٧١">لِأَنَّهَا لَيْسَتْ في مَعْنَى <حرف>الَّذِي</حرف>
  </مقطع>
  <مقطع رقم="٧٢">لِأَنَّهَا لَيْسَتْ فِيْهَا الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٧٣">كَمَا كَانَتْ في <حرف>الَّذِي</حرف>
  </مقطع>
  <مقطع رقم="٧٤">وَاعْلَمْ أَنَّ حَذْفَ النُّوْنِ وَالتَّنْوْيِنِ</مقطع>
  <مقطع رقم="٧٥">لَازِمٌ مَعَ عَلَامَةِ الْمُضْمَرِ غَيْرِ الْمُنْفَصِلِ</مقطع>
  <مقطع رقم="٧٦">لِأَنَّهُ لَا يُتَكَلَّمُ بِهِ مُفْرَدًا</مقطع>
  <مقطع رقم="٧٧">حَتَّى يَكُوْنَ مُتَّصِلًا بِفِعْلٍ قَبْلَهُ</مقطع>
  <مقطع رقم="٧٨">أَوْ بِاسْمٍ فِيْهِ ضَمِيْرٌ</مقطع>
  <مقطع رقم="٧٩">فَصَارَ كَأَنَّهُ النُّوْنُ وَالتَّنْوِيْنُ في الْاِسْمِ</مقطع>
  <مقطع رقم="٨٠">لِأَنَّهُمَا لَا يَكُوْنَانِ إِلَّا زَوَائِدُ</مقطع>
  <مقطع رقم="٨١">وَلَا يَكُوْنَانِ إِلَّا في أَوَاخِرِ الْحُرُوْفِ</مقطع>
  <مقطع رقم="٨٢">وَالْمُظْهَرُ وَإِنْ كَانَ يُعَاقِبُ النُّوْنَ وَالتَّنْوِينَ</مقطع>
  <مقطع رقم="٨٣">فَإِنَّهُ لَيْسَ كَعَلَامَةِ الْمُضْمَرِ الْمُتَّصَلِ</مقطع>
  <مقطع رقم="٨٤">لِأَنَّهُ اسْمٌ يَنْفَصِلُ وَيُبْتَدَأُ</مقطع>
  <مقطع رقم="٨٥">وَلَيْسَ كَعَلَامَةِ الْإِضْمَارِ</مقطع>
  <مقطع رقم="٨٦">لِأَنَّهَا في اللَّفْظِ كَالْنُّوْنِ</مقطع>
  <مقطع رقم="٨٧">فَهِىَ أَقَرَبُ إِلَيْهَا مِنْ الْمُظْهَرِ</مقطع>
  <مقطع رقم="٨٨">اجْتَمَعَ فِيْهَا هٰذَا وَالْمُعَاقِبَةُ</مقطع>
  <مقطع رقم="٨٩">وَقَدْ جَاءَ في الشَّعَرِ وَزَعَمُوْا أَنَّهُ مَصْنُوْعٌ</مقطع>
  <شاهدة رقم="٩" xml:id="٣٩-9">
    <بيت>
      <مصراع>هُمُ الْقَائِلُوْنَ الْخَيْرَ وَالْآمِرُونَهُ</مصراع>
      <مصراع>إِذَا مَا خَشُوْا مِنْ مُحَدِّثِ الْأَمْرِ مُعْظَمًا</مصراع>
