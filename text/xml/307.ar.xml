<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="٢-٣١"
     درنبورج="٢-٢٩"
     البكاء="٤-٤٢٦"
     هارون="٣-٢٥٩"
     يعقوب="٣-٢٨٨"
     رقم="٣٠٧">

  <عنوان>
    <مقطع هوية='٧٩١١٨'>هٰذَا بَاْبُ تَسْمِيَةِ الْحُرُوْفِ وَالْكَلِمِ الَّتِي تُسْتَعْمَلُ</مقطع>
    <مقطع هوية='٤٧٢٠٣'>وَلَيْسَتْ ظُرُوْفًا وَلَا أَسْمَاْءً غَيْرَ ظُرُوْفٍ وَلَا أَفْعَاْلًا</مقطع>
  </عنوان>
  <مقطع هوية='٧٤٧٨٥'>فَالْعَرَبُ تَخْتَلِفُ فِيْهَا</مقطع>
  <مقطع هوية='٢٧٧٤٤'>يُؤَنِّثُهَا بَعْضٌ وَيُذَكِّرُهَا بَعْضٌ</مقطع>
  <مقطع هوية='١٢٣٢٣'>كَمَا أَنَّ <حرف>اللِّسَاْنَ</حرف> يُذَكَّرُ وَيُؤَنَّثُ</مقطع>
  <مقطع هوية='٧٣٦٢٢'>زَعَمَ ذٰلِكَ يُوْنُسُ</مقطع>
  <مقطع هوية='١١٤٤٠'>وَأَنْشَدَنَا قَوْلُ الرَّاْجِزِ</مقطع>
  <شاهدة هوية='٣٠١٥٠'>
    <بيت>
      <مصراع>كَاْفًا وَمِيْمَيْنِ وَسِيْنًا طَاْسِمًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٩٣٩٨'>فَذَكَّرَ وَلَمْ يَقُلْ <حرف>طَاْسِمَةً</حرف>
  </مقطع>
  <مقطع هوية='٢٤٩٩٠'>وَقَاْلَ الرَّاْعِي</مقطع>
  <شاهدة هوية='٢٠٢٧٧'>
    <بيت>
      <مصراع>كَمَا بُيِّنَتْ كَاْفٌ تَلُوْحُ وَمِيْمُهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٥٣٠٣'>فَقَاْلَ <حرف>بُيِّنَتْ</حرف> فَأَنَّثَ</مقطع>
  <مقطع هوية='٧٢٦٥٩'>وَأَمَّا <حرف>إِنَّ</حرف> وَ<حرف>لَيْتَ</حرف></مقطع>
  <مقطع هوية='٦٤٤٠٩'>فَحُرِّكَتْ أَوَاْخِرُهُمَا بِاْلْفَتْحِ</مقطع>
  <مقطع هوية='٤٥١٥٩'>لِأَنَّهُمَا بِمَنْزِلَةِ الْأَفْعَاْلِ نَحْوَ <حرف>كَاْنَ</حرف></مقطع>
  <مقطع هوية='٨٣٣٦١'>فَصَاْرَ الْفَتْحُ أَوْلَى</مقطع>
  <مقطع هوية='٠٩٧١٧'>فَإِذَا صَيَّرْتَ وَاحِدًا مِنَ الْحَرْفَيْنِ اسْمًا لِلْحَرْفِ</مقطع>
  <مقطع هوية='٤٧٣٠٩'>فَهُوَ يَنْصَرِفُ عَلَى كُلِّ حَاْلٍ</مقطع>
  <مقطع هوية='٢٤٨٥٣'>وَإِنْ جَعَلْتَهُ اسْمًا لِلْكَلِمَةِ</مقطع>
  <مقطع هوية='٠٢٦٤٥'>وَأَنْتَ تُرِيْدُ لُغَةَ مَنْ ذَكَّرَ لَمْ تَصْرِفْهَا</مقطع>
  <مقطع هوية='٣٩٤٤٢'>كَمَا لَمْ تَصْرَفْ امْرَأَةً اسْمُهَا عَمْرٍو</مقطع>
  <مقطع هوية='٠٨٩٣٧'>وَإِنْ سَمَّيْتَهَا بِلُغَةِ مَنْ أَنَّثَ</مقطع>
  <مقطع هوية='٤٣٨٣٣'>كُنْتَ بِاْلْخِيَاْرِ</مقطع>
  <مقطع هوية='٧٢٧٤١'>وَلَا بُدَّ لِكُلِّ وَاحِدٍ مِنَ الْحَرْفَيْنِ</مقطع>
  <مقطع هوية='٢٠٢٢١'>إِذَا جَعَلْتَهُ اسْمًا</مقطع>
  <مقطع هوية='١٠٨٩٧'>أَنْ يَتَغَيَّرَ عَنْ حَاْلِهِ</مقطع>
  <مقطع هوية='٦٥٢٤٩'>الَّتِي كَاْنَ عَلَيْهَا قَبْلَ أَنْ يَكُوْنَ اسْمًا</مقطع>
  <مقطع هوية='١٢٩٨٢'>كَمَا أَنَّكَ إِذَا جَعَلْتَ  <حرف>فَعَلَ</حرف> اسْمًا</مقطع>
  <مقطع هوية='٦٢٤٣٩'>تَغَيَّرَ عَنْ حَاْلِهِ وَصَاْرَ بِمَنْزِلَةِ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٠٨٨٥٩'>وَكَمَا أَنَّكَ إِذَا سَمَّيْتَهُ بِـ<حرف>أَفْعَلَ</حرف>
  </مقطع>
  <مقطع هوية='٢٤٨٧٤'>غَيَّرْتَهُ عَنْ حَاْلِهِ فِي الْأَمْرِ</مقطع>
  <مقطع هوية='٨٧٩٢٧'>قَاْلَ الشَّاْعِرُ وَهُوَ أَبُوْ طَاْلِبٍ</مقطع>
  
  <شاهدة هوية='٥١٢٧٦'>
    <بيت>
      <مصراع>لَيْتَ شِعْرِيَ مُسَاْفِرَ بِنَ أَبِيْ عَمْرِوٍ</مصراع>
      <مصراع>وَلَيْتٌ يَقُوُلُهَا الْمَحْزُوْنُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤٥٨٢٩'>وَسَأَلْتُ الْخَلِيْلَ عَنْ رَجُلٍ سَمَّيْتَهُ  <حرف>أَنَّ</حرف>
  </مقطع>
  <مقطع هوية='٦٦٩٥٧'>فَقَاْلَ <قبس>هٰذَا أَنَّ لَا أَكْسِرُهُ</قبس>
  </مقطع>
  <مقطع هوية='٢٦٢٩٤'>وَ<حرف>أَنَّ</حرف> غَيْرُ  <حرف>إِنَّ</حرف>
  </مقطع>
  <مقطع هوية='٤٦٦٦١'>
  <حرف>إِنَّ</حرف> كَاْلْفِعْلِ وَ<حرف>أَنَّ</حرف> كَاْلِٱسْمِ</مقطع>
  <مقطع هوية='٤٦٦٠٦'>أَلَا تَرَى أَنَّكَ تَقُوْلُ  <قول هوية='١٦٤٥٧'>عَلِمْتُ أَنَّكَ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع هوية='٥١٨٩٢'>فَمَعْنَاْهُ  <قول هوية='٣٣٩٧٨'>عَلِمْتُ انْطِلَاْقِكْ</قول>
  </مقطع>
  <مقطع هوية='١١٥٥٦'>وَلَوْ قُلْتَ هٰذَا لَقُلْتَ لِرَجُلٍ يُسَمَّى بِـ<حرف>ضَاْرِبٍ</حرف> :  <حرف>يَضْرِبُ</حرف>
  </مقطع>
  <مقطع هوية='٠٧٤٣٩'>وَلِرَجُلٍ يُسَمَّى  <حرف>يَضْرِبُ</حرف> :  <حرف>ضَاْرِبٌ</حرف>
  </مقطع>
  <مقطع هوية='٨٢٤١٠'>أَلَا تَرَى أَنَّكَ لَوْ سَمَّيْتَهُ  <حرف>إِنْ</حرف> الْجَزَاْءِ كَاْنَ مَكْسُوْرًا</مقطع>
  <مقطع هوية='٤٩٤٠٥'>وَإِنْ سَمَّيْتَهُ بِـ<حرف>أَنْ</حرف> الَّتِي تَنْصِبُ الْفِعْلَ كَاْنَ مَفْتُوْحًا</مقطع>
  <مقطع هوية='١٢٩٠٥'>وَأَمَّا  <حرف>لَوْ</حرف> وَ<حرف>أَوْ</حرف> فَهُمَا ساْكِنَتَا الْأَوَاْخِرِ</مقطع>
  <مقطع هوية='٠٣٦٦٧'>لِأَنَّ قَبْلَ آخِر كُلِّ وَاحِدٍ مِنْهُمَا حَرْفًا مُتَحَرِّكًا</مقطع>
  <مقطع هوية='٢١٩٣٤'>فَإِذَا صَاْرَتْ كُلُّ وَاحِدَةٍ مِنْهُمَا اسْمًا</مقطع>
  <مقطع هوية='١١٣٢٤'>فَقِصَّتُهَا فِي التَّأْنِيْثِ وَالتَّذْكِيْرِ وَالانْصِرَاْفِ</مقطع>
  <مقطع هوية='٨٠٢٣١'>كَقِصَّةِ  <حرف>لَيْتَ</حرف> وَ<حرف>إِنَّ</حرف>
  </مقطع>
  <مقطع هوية='١٤٦٧٨'>إِلَّا أَنَّكَ تُلْحِقُ وَاوًا أُخْرَى فَتُثَقِّلُ</مقطع>
  <مقطع هوية='٣٥٨٩٩'>وَذٰلِكَ لِأَنَّهُ لَيْسَ فِي كَلَاْمِ الْعَرَبِ اسْمٌ آخِرُهُ وَاوٌ قَبْلَهَا حَرْفٌ مَفْتُوْحٌ</مقطع>
  <مقطع هوية='٠٨٦٠٧'>قَاْلَ الشَّاْعِرُ أَبُوْ زُبَيْدٍ</مقطع>
  <شاهدة هوية='٣٦٥٠٥'>
    <بيت>
      <مصراع>لَيْتَ شِعْرِي وَأَيْنَ مِنِّي <ثبات>لَيْتٌ</ثبات></مصراع>
      <مصراع>إِنَّ <ثبات>لَيْتًا</ثبات> وَإِنَّ <ثبات>لَوًّا</ثبات> عَنَاْءُ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع هوية='٨٩٩٨٦'>وَقَاْلَ</مقطع>
  <شاهدة هوية='٢٢٧٠٨'>
    <بيت>
      <مصراع>أُلَاْمُ عَلَى <ثبات>لَوٍّ</ثبات> وَلَوْ كُنْتُ عَاْلِمًا</مصراع>
      <مصراع>بِأَذْنَاْبِ <ثبات>لَوٍّ</ثبات> لَمْ تَفُتْنِي أَوَاْئِلُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٦٥٤١٣'>وَكَاْنَ بَعْضُ الْعَرَبِ يَهْمُزُ كَمَا يُهْمَزُ  <حرف>النَّؤُوْرُ</حرف>
  </مقطع>
  <مقطع هوية='٣٩٨٤٧'>فَيَقُوْلُ  <حرف>لَوْءٌ</حرف>
  </مقطع>
  <مقطع هوية='٢٠٨٠٠'>وَإِنَّمَا دَعَاْهُمْ إِلَى تَثْقِيْلِ  <حرف>لَوٌّ</حرف>
  </مقطع>
  <مقطع هوية='٥٥٤١٣'>الَّذِي يَدْخُلُ الْوَاْوُ مِنَ الْإِجْحَاْفِ</مقطع>
  <مقطع هوية='١٣٦٤١'>لَوْ نَوَّنْتَ وَمَا قَبْلَهَا مُتَحَرِّكٌ مَفْتُوْحٌ</مقطع>
  <مقطع هوية='٧١٢٥٧'>فَكَرِهُوْا أَنْ لَا يُثَقِّلُوْا حَرْفًا لَوْ انْكَسَرَ مَا قَبْلَهُ أَوْ انْضَمَّ ذَهَبَ فِي التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٨٨٦٦٦'>وَرَأَوُا ذٰلِكَ إِخِلاْلًا لَوْ لَمْ يَفْعَلُوَا</مقطع>
  <مقطع هوية='١١٤١١'>فَمِمَّا جَاْءَ فِيْهِ الْوَاْوُ وَقَبْلَهُ مَضْمُوْمٌ  <حرف>هُوَ</حرف>
  </مقطع>
  <مقطع هوية='٦٢٨٩٠'>فَلَوْ سَمَّيْتَ بِهِ ثَقَّلْتَ فَقُلْتَ  <قول هوية='١٨٧٠٣'>هٰذَا هُوٌّ</قول>
  </مقطع>
  <مقطع هوية='١٦٤٧٨'>وَتَدَعُ الْهَاْءَ مَضْمُوْمَةً</مقطع>
  <مقطع هوية='٠٣٠٤٢'>لِأَنَّ أَصْلَهَا الضَّمُّ تَقُوْلُ  <حرف>هُمَا</حرف> وَ<حرف>هُمْ</حرف> وَ<حرف>هُنَّ</حرف>
  </مقطع>
  <مقطع هوية='٢٤٦١٦'>وَمِمَّا جَاْءَ وَقَبْلَهُ مَكْسُوْرٌ  <حرف>هِيَ</حرف>
  </مقطع>
  <مقطع هوية='١٠٩٩٢'>فَإِنْ سَمَّيْتَ بِهِ رَجُلًا ثَقَّلْتَهُ كَمَا ثَقَّلْتَ  <حرف>هُوٌّ</حرف>
  </مقطع>
  <مقطع هوية='١١٨٣٦'>وَإِنْ سَمَّيْتَ مُؤَنَّثًا بِـ<حرف>هِوَ</حرف> لَمْ تَصْرِفْهُ لِأَنَّهُ مُذَكَّرٌ</مقطع>
  <مقطع هوية='١٥٠٥٣'>وَلَوْ سَمَّيْتَ رَجُلًا <حرف>ذَوْ</حرف> لَقُلْتَ <قول هوية='٤٠٤٩٩'>هٰذَا ذَوًا</قول></مقطع>
  <مقطع هوية='٤٢٧٣٢'>لِأَنَّ أَصْلَهُ <حرف>فَعَلٌ</حرف></مقطع>
  <مقطع هوية='٣٤٧١٠'>أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول هوية='٢٤٦١١'>هَاْتَاْنِ ذَوَاْتَا مَاْلٍ</قول></مقطع>
  <مقطع هوية='٦٧٠٢١'>فَهٰذَا دَلِيْلٌ عَلَى أَنَّ <حرف>ذَوْ</حرف> <حرف>فَعَلٌ</حرف></مقطع>
  <مقطع هوية='٧١٢٧٢'>كَمَا أَنَّ <حرف>أَبَوَاْنِ</حرف> دُلَيْلٌ عَلَى أَنَّ <حرف>أَبَا</حرف> <حرف>فَعَلٌ</حرف></مقطع>
  <مقطع هوية='٢٧٥٥٥'>وَكَاْنَ الْخَلِيْلُ يَقُوْلُ  <قول هوية='٧٧٠٩٣'>هٰذَا ذَوٌّ</قول> بِفَتْحِ الذَّاْلِ</مقطع>
  <مقطع هوية='٧٠٧٧٤'>لِأَنَّ أَصْلَهَا الْفَتْحُ</مقطع>
  <مقطع هوية='٤٧٤٩٤'>تَقُوْلُ <حرف>ذَوَا</حرف> وَتَقُوْلُ <حرف>ذَوُو</حرف></مقطع>
  <مقطع هوية='٠١٢١٣'>وَأَمَّا  <حرف>كَيْ</حرف> فَتُثَقَّلُ يَاْؤُهَا</مقطع>
  <مقطع هوية='٠٥٠٤٦'>لِأَنَّهُ لَيْسَ فِي الْكَلَاْمِ حَرْفٌ آخِرَهُ يِاْءٌ مَا قَبْلَهُ مَفْتُوْحٌ</مقطع>
  <مقطع هوية='٣٦٠١٠'>وَقِصَّتُهَا كَقِصَّةِ  <حرف>لَوْ</حرف>
  </مقطع>
  <مقطع هوية='٣٥٦٣٢'>وَأَمَّا  <حرف>فَِي</حرف> فَتُثَقَّلُ يَاْؤُهَا</مقطع>
  <مقطع هوية='٧٢٠٥٥'>لِأَنَّهَا لَوْ نُوِّنَتْ أُجْحِفَ بِهَا اسْمًا</مقطع>
  <مقطع هوية='٧٧٨١٠'>وَهِيَ كَيَاْءِ  <حرف>هِيَ</حرف> وَكَوَاْو<حرف>هُوَ</حرف>
  </مقطع>
  <مقطع هوية='٦١٢٥٩'>وَلَيْسَ فِي الْكَلَاْمِ اسْمٌ هَكَذَا</مقطع>
  <مقطع هوية='٤١٥٥٤'>وَلَمْ يَبْلُغُوْا بِاْلْأَسْمَاْءِ هَذِهِ الْغَاْيَةِ</مقطع>
  <مقطع هوية='١٥٧٢٣'>أَنْ تَكُوْنَ فِي الْوَصْلِ لَا يَبْقَىْ مِنْهَا إِلَّا حَرْفٌ وَاحِدٌ</مقطع>
  <مقطع هوية='٩٨١٤٦'>فَإِذَا كَاْنَتْ اسْمًا لِمُؤَنَّثٍ لَا يَنْصَرِفُ ثُقِّلَتْ أَيْضًا</مقطع>
  <مقطع هوية='٠٩٥٧٣'>لِأَنَّهُ إِذَا أَثَّرَ أَنْ يَجْعَلَهَا اسْمًا</مقطع>
  <مقطع هوية='١٨٨٥٣'>فَقَدْ لَزِمَهَا أَنْ تَكُوْنَ نَكِرَةً</مقطع>
  <مقطع هوية='٩٤٠٩٢'>وَأَنْ تَكُوْنَ اسْمًا لِمُذَكَّرٍ</مقطع>
  <مقطع هوية='٧١٢٧٦'>فَكَأَنَّهُمْ كَرِهُوْا أَنْ يَكُوْنَ الِاسْمُ</مقطع>
  <مقطع هوية='٠٦٤٦٨'>فَِي التَّذْكِيْرِ وَالنَّكِرَةِ عَلَى حَرْفٍ</مقطع>
  <مقطع هوية='٣٤٨٦٤'>كَمَا كَرِهُوْا أَنْ يَكُوْنَ كَذٰلِكَ فِي الْوَصْلِ</مقطع>
  <مقطع هوية='٢٧٢١٠'>وَلَيْسَ مِنْ كَلَاْمِهِمْ أَنْ يَكُوْنَ فِي الِاْنْصِرَاْفِ وَالْوَصْلِ عَلَى بِنَاْءٍ</مقطع>
  <مقطع هوية='١٥٤٩٥'>وَفِيْ غَيْرِ الِاْنْصِرَاْفِ وَالْوَصْلِ عَلَى آخَرَ</مقطع>
  <مقطع هوية='١٣٣٧٦'>فَصَاْرَ الْٱسْمُ لِغَيْرِ مُنْصَرِفٍ</مقطع>
  <مقطع هوية='٥٥١٢٦'>يَجِيْءُ عَلَى بِنَاْئِهِ إِذَا كَاْنَ اسْمًا لِمُنْصَرِفٍ</مقطع>
  <مقطع هوية='٣٦٣٦١'>وَمِنْ ثُمَّ مَدُّوْا  <حرف>لَا</حرف> وَ<حرف>فَِيْ</حرف>
  </مقطع>
  <مقطع هوية='٣٧٥٢٣'>فَِي الِاْنْصِرَاْفِ وَغَيْرِ الِاْنْصِرَاْفِ</مقطع>
  <مقطع هوية='٤٩٢٤٩'>وَاْلتَّأْنِيْثُ وَالتَّذْكِيْرُ كَـ<حرف>كَيْ</حرف> وَ<حرف>لَوْ</حرف>
  </مقطع>
  <مقطع هوية='١٦٣٣٨'>وَقِصَّتُهَا كَقِصَّتِهَا فِي كُلِّ شَيْءٍ</مقطع>
  <مقطع هوية='٣٨١٠١'>وَإِذَا صَاْرَتْ  <حرف>ذَا</حرف> اسْمًا أَوْ  <حرف>مَا</حرف> مُدَّتْ</مقطع>
  <مقطع هوية='٣٥٤٧٨'>وَلَمْ تَصْرِفْ وَاحِدًا مِنْهُمَا إِذَا كَاْنَ اسْمٌ مُؤَنَّثٌ</مقطع>
  <مقطع هوية='٠٢٥٢٦'>لِأَنَّهُمَا مُذَكَّرَاْنِ</مقطع>
  <مقطع هوية='٦٨٦٦٠'>فَأَمَّا  <حرف>لَا</حرف> فَتَمُدُّهَا وَقِصَّتُهَا قِصَّةُ  <حرف>فَِي</حرف>
  </مقطع>
  <مقطع هوية='١١١٢٦'>فَِي التَّذْكِيْرِ وَالْتَّأْنِيْثِ وَالانْصِرَاْفِ وَتَرَكَهُ</مقطع>
  <مقطع هوية='٣٥٦١٨'>وَسَأَلْتُهُ عَنْ رَجُلٍ اسْمُهُ  <حرف>فَُو</حرف>
  </مقطع>
  <مقطع هوية='٧٩١٥٩'>فَقَاْلَ <قبس>الْعَرَبُ قَدْ كَفَتْنَا أَمَرَ هٰذَا لِمَا أَفْرَدُوْهُ</قبس>
  </مقطع>
  <مقطع هوية='٧٤٢١٤'>
    <قبس>قَاْلُوْا  <حرف>فَمٌ</حرف> فَأَبْدَلُوْا الْمِيْمَ مَكَاْنَ الْوَاْوِ</قبس>
  </مقطع>
  <مقطع هوية='٩٧٦٥٤'>
    <قبس>حَتَّى يَصِيْرَ عَلَى مِثَاْلٍ تَكُوْنُ الْأَسْمَاْءُ عَلَيْهِ</قبس>
  </مقطع>
  <مقطع هوية='٠٧٩٢٠'>فَهٰذَا الْبَدَلُ بِمَنْزِلَةِ تَثْقِيْلِ  <حرف>لَوْ</حرف> لِيُشْبِهُ الْأَسْمَاْءَ</مقطع>
  <مقطع هوية='٨٥٩٨٠'>فَإِذَا سَمَّيْتَهُ بِهٰذَا فَشَبِّهْهُ بِاْلْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٨٦٠٩٥'>كَمَا شَبَّهَتْ الْعَرَبُ</مقطع>
  <مقطع هوية='٥٦٠٦٢'>وَلَوْ لَمْ يَكُوْنُوْا قَاْلُوْا  <حرف>فَمٌ</حرف> نُقِلَتْ  <حرف>فَُوْهٌ</حرف>
  </مقطع>
  <مقطع هوية='٩٣٣٧٠'>لِأَنَّهُ مِنْ الْهَاْءِ قَاْلُوْا  <حرف>أَفْوَاْهٌ</حرف> كَمَا قَاْلُوْا  <حرف>سَوْطَ</حرف> وَ<حرف>أَسْوَاْطٌ</حرف>
  </مقطع>
  <مقطع هوية='٢٥٦٣٢'>وَأَمَّا الْـ<حرف>بَا</حرف> وَالْـ<حرف>تَّا</حرف> وَالُ  <حرف>ثا</حرف> وَالْـ<حرف>يَا</حرف> وَالْ  <حرف>حَا</حرف> وَالْ  <حرف>خَا</حرف> وَالْ  <حرف>رَّا</حرف> وَالْ  <حرف>طَّا</حرف> وَالْ  <حرف>ظَّا</حرف> وَالْ  <حرف>فَا</حرف>
  </مقطع>
  <مقطع هوية='١٧٤٢١'>فَإِذَا صِرْنَ أَسْمَاْءً مَدَدْنَ كَمَا مُدَّتْ  <حرف>لَا</حرف>
  </مقطع>
  <مقطع هوية='٢٠٢٩١'>إِلَّا أَنَّهُنَّ إِذَا كُنَّ أَسْمَاْءٌ</مقطع>
  <مقطع هوية='٣٠٣٣٦'>فَهُنَّ يَجْرِيْنَ مَجْرَى  <حرف>رَجُلٌ</حرف> وَنَحْوِهِ</مقطع>
  <مقطع هوية='٢٢٢٢٤'>وَيَكُنُّ نَكِرَةً بِغَيْرِ أَلِفٍ وَلَاْمٍ</مقطع>
  <مقطع هوية='٨١٤٦١'>وَدُخُوْلُ الْأَلِفِ وَاللَّاْمِ فِيْهِنَّ يُدَلُّكَ عَلَى أَنَّهُنَّ نَكِرَةً</مقطع>
  <مقطع هوية='٥٦٠١٦'>إِذَا لَمْ يَكُنْ فِيْهِنَّ أَلْفٌ وَلَاْمٌ</مقطع>
  <مقطع هوية='١٢٥٥٥'>فَأُجْرِيَتْ هَذِهِ الْحُرُوْفُ مَجْرَى  <حرف>ابْنِ مَخَاْضٍ</حرف> وَ<حرف>ابْنِ لَبُوْنٍ</حرف>
  </مقطع>
  <مقطع هوية='٨٤٠٩٩'>وَأُجْرِيَتْ الْحُرُوْفُ الْأَوَّلُ مَجْرَى  <حرف>سَاْمِّ أَبْرَصَ</حرف> وَ<حرف>أُمِّ حُبَيْنٍ</حرف> وَنَحْوِهِمَا</مقطع>
  <مقطع هوية='٩٦٨٠٦'>أَلَا تَرَى أَنَّ الْأَلِفَ وَاللَّاْمَ لَا تَدْخُلَاْنِ فِيْهِنَّ</مقطع>
  
  <مقطع هوية='٩٤٧٣١'>وَاْعْلَمْ أَنَّ هَذِهِ الْحُرُوْفَ إِذَا تُهَجِّيَتْ</مقطع>
  <مقطع هوية='٠٥٣٢٦'>مَقْصُوْرَةٌ لِأَنَّهَا لَيْسَتْ بِأَسْمَاْءٍ</مقطع>
  <مقطع هوية='٢٠٤٦٠'>وَإِنَّمَا جَاْءَتْ فِي التَّهَجِيْ عَلَى الْوَقْفِ</مقطع>
  <مقطع هوية='١٤٢٨٩'>وَيَدُلُّكَ عَلَى ذٰلِكَ أَنَّ الْقَاْفَ وَالصَّاْدَ وَالدَّاْلَ مَوْقُوْفَةُ الْأَوَاْخِرِ</مقطع>
  <مقطع هوية='٦٨٢٤٨'>فَلَوْلا أَنَّهَا عَلَى الْوَقْفِ حُرِّكَتْ أَوَاْخِرُهُنَّ</مقطع>
  <مقطع هوية='٨٧٦١٨'>وَنَظِيْرُ الْوَقْفِ هٰهُنَا الْحَذْفِ فِي الْبَاْءِ وَأَخَوَاْتِهَا</مقطع>
  <مقطع هوية='٠٠١٨٠'>وَإِذَا أَرَدْتَ أَنْ تَلْفِظَ بِحُرُوْفِ الْمُعْجَمُ قَصَرْتَ وَأَسْكَنْتَ</مقطع>
  <مقطع هوية='٧١٧٧١'>لِأَنَّكَ لَسْتَ تُرِيْدُ أَنْ تَجْعَلَهَا أَسْمَاْءً</مقطع>
  <مقطع هوية='٤٤٧٤٣'>وَلَكِنَّكَ أَرَدْتُ أَنْ تُقَطَّعَ حُرُوْفُ الْٱسْمِ</مقطع>
  <مقطع هوية='٧٥٤٢٦'>فَجَاْءَتْ كَأَنَّهَا أَصْوَاْتٌ يُصَوَّتُ بِهَا</مقطع>
  <مقطع هوية='٥٢٦٣٧'>إِلَّا أَنَّكَ تَقِفُ عِنْدَهَا لِأَنَّهَا بِمَنْزِلَةِ  <حرف>عِهْ</حرف>
  </مقطع>
  <مقطع هوية='٥٠٣٩٠'>فَإِنْ قُلْتَ <قبس>مَا بَاْلِيْ أَقُوْلُ  <قول هوية='٠٧١٧٦'>وَاْحِدُ اثْنَاْنِ</قول> فَأَشُمُّ الْوَاْحِدِ</قبس>
  </مقطع>
  <مقطع هوية='٠٢٤٦٨'>
    <قبس>وَلَا يِكُوُنُ ذٰلِكَ فِي هَذِهِ الْحُرُوْفِ</قبس>
  </مقطع>
  <مقطع هوية='٩٩١٨٧'>فَلِأَنَّ الْوَاْحِدَ اسْمٌ مُتَمَكِّنٌ وَلَيْسَ كَاْلصَّوْتِ</مقطع>
  <مقطع هوية='١١٧١٩'>وَلَيْسَتْ هَذِهِ الْحُرُوْفُ مِمَّا يُدْرَجُ</مقطع>
  <مقطع هوية='٠٤٩٢٦'>لَيْسَ أَصْلُهَا الْإِدْرَاْجَ</مقطع>
  <مقطع هوية='٣٩٤٩٠'>وَهِيَ هٰهُنَا بِمَنْزِلَةِ  <حرف>لَا</حرف> فِي الْكَلَاْمِ</مقطع>
  <مقطع هوية='٣٩٥٢٩'>إِلَّا أَنَّهَا لَيْسَتْ تُدْرَجُ عِنْدَهُمْ</مقطع>
  <مقطع هوية='٠٧٣٤٧'>وَذٰلِكَ لِأَنَّ  <حرف>لَا</حرف> فِي الْكَلَاْمِ عَلَى غَيْرِ مَا هَيَ عَلَيْهِ إِذَا كَاْنَتْ اسْمًا</مقطع>
  <مقطع هوية='٨٨١٩٦'>وَزَعَمَ مِنْ يُوْثَقُ بِهِ أَنَّهُ سَمِعَ مِنْ الْعَرَبِ</مقطع>
  <مقطع هوية='٧٠٩٥٣'>مَنْ يَقُوْلْ <قول هوية='٨٦٣٠٨'>ثَلَاْثَةَ ٱرْبَعَةِ</قول>
  </مقطع>
  <مقطع هوية='٧٦٨٥٨'>طُرِحَ هُمْزَةُ <حرف>أَرْبَعَةَ</حرف> عَلَى الْهَاْءِ</مقطع>
  <مقطع هوية='٦٢٧٧٤'>فَفَتَحَهَا وَلَمْ يُحَوِّلْهَا تَاْءً</مقطع>
  <مقطع هوية='٣٨٩٩٨'>لِأَنَّهُ جَعَلَهَا سَاْكِنَةً</مقطع>
  <مقطع هوية='٩٨٢٧٥'>وَاْلسَّاْكِنُ لَا يَتَغَيَّرُ فِي الْإِدْرَاْجِ</مقطع>
  <مقطع هوية='٥٣٦٩٩'>تَقُوْلُ <قول هوية='٣٩٦٤٥'>اضْرِبْ</قول> ثُمَّ تَقُوْلُ <قول هوية='٤٧٥٩٢'>اضْرِبْ زَيْدًا</قول></مقطع>
  
  <مقطع هوية='٨٦٣٥٧'>وَاْعْلَمْ أَنَّ الْخَلِيْلَ كَاْنَ يَقُوْلُ <قبس>إِذَا تَهَجَّيْتَ فَاْلَحُرُوْفُ حَاْلُهَا كَحَاْلِهَا فِي الْمُعْجَمِ وَالْمُقَطَّعِ</قبس>
  </مقطع>
  <مقطع هوية='٠٣٧٤٩'>تَقُوْلُ  <قول هوية='٠٨٠٢٧'>لَاْمْ أَلْفْ</قول> وَ<قول هوية='٢٣٩٠٢'>قَاْفْ لَاْمْ</قول>
  </مقطع>
  <مقطع هوية='٧٧٩٣٣'>قَاْلَ</مقطع>
  <شاهدة هوية='١٨٢٩٢'>
    <بيت>
      <مصراع>تُكَتَّباْنِ فِي الْطَّرِيْقِ لَاْمَ أَلِفْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٤٦٢٨'>وَأَمَّا  <حرف>زَاْيٌ</حرف> فَفِيْهَا لُغَتَاْنِ</مقطع>
  <مقطع هوية='٢٧٤٠٥'>فَمِنْهُمْ مَّنْ يَجْعَلُهَا فِي التَّهَجِّي كَـ<حرف>كَيْ</حرف>
  </مقطع>
  <مقطع هوية='٥٣٨٠٣'>وَمِنْهُمْ مَنْ يَقُوْلُ  <حرف>زَاْيٌ</حرف>
  </مقطع>
  <مقطع هوية='٨٩٩٨٤'>فَيَجْعَلُهَا بِزِنَةِ  <حرف>وَاْوٍ</حرف> وَهِيَ أَكْثَرُ</مقطع>
  <مقطع هوية='٦١٧٧٠'>وَأَمَّا  <حرف>أَمْ</حرف> وَ<حرف>مَنْ</حرف> وَ<حرف>إِنْ</حرف> وَ<حرف>مُذْ</حرف>
  </مقطع>
  <مقطع هوية='٢٠٥٨٢'>فَِي لُغَةِ مَنْ جَرَّ</مقطع>
  <مقطع هوية='٩٨٣٤٨'>وَ<حرف>أَنْ</حرف> وَ<حرف>عَنْ</حرف>
  </مقطع>
  <مقطع هوية='١٧٢٠٥'>إِذَا لَمْ تَكُنْ ظَرْفًا</مقطع>
  <مقطع هوية='٨٧٤٩٤'>وَ<حرف>لَمْ</حرف> وَنَحْوُهُنَّ</مقطع>
  <مقطع هوية='٨٧٨٢٢'>إِذَا كُنَّ أَسْمَاْءً</مقطع>
  <مقطع هوية='٧٣١٨٥'>لَمْ تُغَيَّرْ لِأَنَّهَا تُشْبِهُ أَسْمَاْءً</مقطع>
  <مقطع هوية='٩٦٥٨٤'>نَحْوَ <حرف>يَدٍ</حرف> وَ<حرف>دَمٍ</حرف></مقطع>
  <مقطع هوية='٧٥٤٦٣'>تُجْرِيْهِنَّ إِنْ شِئْتَ إِذَا كُنَّ أَسْمَاْءً لِلتَّأْنِيْثِ</مقطع>
  <مقطع هوية='١٣١٦٤'>وَأَمَّا  <حرف>نِعْمَ</حرف> وَ<حرف>بِئْسَ</حرف> وَنَحْوِهِمَا</مقطع>
  <مقطع هوية='٩٤٣٥٥'>فَلَيْسَ فِيْهِمَا كَلَاْمٌ</مقطع>
  <مقطع هوية='٨١٢٤٤'>لِأَنَّهُمَا لَا تُغَيَّرَاْنِ</مقطع>
  <مقطع هوية='١١٦٤٦'>لِأَنَّ عَاْمَّةَ الْأَسْمَاْءِ عَلَى ثَلَاْثَةِ أَحْرُفٍ</مقطع>
  <مقطع هوية='٢٨٩٧٥'>وَلَا تُجْرِيْهِنَّ إِذَا كُنَّ أَسْمَاْءً لِلْكَلِمَةِ</مقطع>
  <مقطع هوية='١٢٣٨٢'>لِأَنَّهُنَّ أَفْعَاْلٌ وَالْأَفْعَاْلُ عَلَى التَّذْكِيْرِ لِأَنَّهَا تُضَاْرِع فَاْعِلًا</مقطع>
  <مقطع هوية='٤٣٣٥٩'>وَاْعْلَمْ أَنَّكَ إِذَا جَعَلْتَ حَرْفًا مِنْ حُرُوْفِ الْمُعْجَمِ</مقطع>
  <مقطع هوية='٣٧٠٦٩'>نَحْوَ الْـ<حرف>بَا</حرف> وَالـ<حرف>تَّاْءُ</حرف> وَأَخَوَاْتَهَمَا</مقطع>
    <مقطع هوية='١٩٨٤٧'>ٱسْمًا لِلْحَرْفِ أَوْ لِلْكَلِمَةِ أَوْ لِغَيْرِ ذٰلِكَ</مقطع>
  <مقطع هوية='١٨٠٧٠'>جَرَىْ مَجْرَى  <حرف>لَا</حرف> إِذَا سَمَّيْتَ بِهَا</مقطع>
  <مقطع هوية='١٢٤٩٣'>تَقُوْلُ  <حرف>هٰذَا بَاْءٌ</حرف> كَمَا تَقُوْلُ  <حرف>هٰذَا لاْءٌ</حرف> فَاْعْلَمْ</مقطع>

