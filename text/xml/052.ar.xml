<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٣٠"
     درنبورج="١-١٠٩"
     البكاء="١-٣٣٧"
     هارون="١-٢٥٨"
     يعقوب="١-٣١٦"
     رقم="٥٢">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ مَا يُضْمَرُ فِيْهِ الْفِعْلُ الْمُسْتَعْمَلُ إِظْهَارُهُ بَعْدَ حَرْفٍ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣">
    <قول رقم="١" مثال="١">النَّاسُ مَجْزِيِّونَ بِأَعْمَالِهِمْ إِنْ خَيْرًا فَخَيْرٌ وَإِنْ شَرًّا فَشَرٌّ</قول>
  </مقطع>
  <مقطع رقم="٤">وَ<قول رقم="٢" مثال="١">الْمَرْءُ مَقْتُوْلٌ بِمَا قتل بِهِ إِنْ خِنْجَرًا فَخِنْجَرٌ وَإِنْ سَيْفًا فَسَيْفٌ</قول>
  </مقطع>
  <مقطع رقم="٥">وَإِنْ شِئْتَ أَظْهَرْتَ الْفِعْلَ فَقُلْتَ</مقطع>
  <مقطع رقم="٦">
    <قول رقم="٣" مثال="١">إِنْ كَانَ خِنْجَرًا فَخِنْجَرٌ وَإِنْ كَانَ شَرًا فَشرٌّ</قول>
  </مقطع>
  <مقطع رقم="٧">وَمِنَ الْعَرَبِ مَنْ يَقُوْلُ</مقطع>
  <مقطع رقم="٨">
    <قول رقم="٤" مثال="١">إِنْ خِنْجَرًا فَخِنْجَرًا</قول> وَ<قول رقم="٥" مثال="١">إِنْ خَيْرًا فَخَيْرًا</قول> وَ<قول رقم="٦" مثال="١">إِنْ شَرًّا فَشَرًّا</قول>
  </مقطع>
  <مقطع رقم="٩">كَأَنَّهُ قَالَ</مقطع>
  <مقطع رقم="١٠">
    <قول رقم="٧">إِنْ كَانَ الَّذِي عَمِلَ خَيْرًا جُزِيَ خَيْرًا وَإِنْ كَانَ شَرًّا جُزِيَ شَرًّا</قول>
  </مقطع>
  <مقطع رقم="١١">وَ<قول رقم="٨">إِنْ كَانَ الَّذِي قتل بِهِ خِنْجَرًا كَانَ الَّذِىْ يُقْتَلُ بِهِ خِنْجَرًا</قول>
  </مقطع>
  <مقطع رقم="١٢">وَالرَّفْعُ أَكْثَرُ وَأَحْسَنُ في الْآخِرِ</مقطع>
  <مقطع رقم="١٣">لِأَنَّكَ إِذَا أَدْخَلْتَ الْفَاءَ في جَوَابِ الْجَزَاءِ اسْتَأْنَفْتَ مَا بَعْدَهًا</مقطع>
  <مقطع رقم="١٤">وَحَسُنَ أَنْ تَقَعَ بَعْدَهَا الْأَسْمَاءُ</مقطع>
  <مقطع رقم="١٥">وَإِنَّمَا أَجَازُوْا النَّصْبَ حَيْثُ كَانَ النَّصْبُ فِيْمَا هُوَ جَوَابُهُ</مقطع>
  <مقطع رقم="١٦">لِأَنَّهُ يُجْزَمُ كَمَا يُجْزَمُ</مقطع>
  <مقطع رقم="١٧">وَلِأَنَّهُ لَا يَسْتَقِيْمُ وَاحَدٌ مِنْهُمَا إِلَّا بِالْآخَرِ</مقطع>
  <مقطع رقم="١٨">فَشَبَّهُوْا الْجَوَابَ بِخَبَرِ الِابْتِدَاءِ وَإِنْ لَمْ يَكُنْ مِثْلَهُ في كُلِّ حَالَةٍ</مقطع>
  <مقطع رقم="١٩">كَمَا يُشَبِّهُونَ الشَّيْءَ بِالشَّيءِ</مقطع>
  <مقطع رقم="٢٠">وَإِنْ لَمْ يَكُنْ مِثْلَهُ وَلَا قِرِيْبًا مِنْهُ</مقطع>
  <مقطع رقم="٢١">وَقَدْ ذَكَرْنَا ذٰلِكَ فِيْمَا مَضَىْ وَسَنَذْكُرُهُ أَيْضًا إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٢٢">وَإِذَا أَضْمَرْتَ فَأَنْ تُضْمِرَ النَّاصِبَ أَحْسَنُ</مقطع>
  <مقطع رقم="٢٣">لِأَنَّكَ إِذَا أَضْمَرْتَ الرَّافِعَ أَضْمَرْتَ لَهُ أَيْضًا خَبَرًا أَوْ شَيْئًا يَكُوْنُ في مَوْضِعِ خَبَرِهِ</مقطع>
  <مقطع رقم="٢٤">فَكُلَّمَا كَثُرَ الْإِضْمَارُ كَانَ أَضْعَفَ</مقطع>
  <مقطع رقم="٢٥">وَإِنْ أَضْمَرْتَ الرَّافِعَ كَمَا أَضْمَرْتَ النَّاصِبَ فَهُوَ عَرَبِىٌّ حَسَنٌ</مقطع>
  <مقطع رقم="٢٦">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٧">
    <قول رقم="٩">إِنْ خَيْرٌ فَخَيْرٌ</قول> وَ<قول رقم="١٠">إِنْ خِنْجَرٌ فَخِنْجَرٌ</قول>
  </مقطع>
  <مقطع رقم="٢٨">كَأَنَّهُ قَالَ</مقطع>
  <مقطع رقم="٢٩">
    <قول رقم="١١">إِنْ كَانَ مَعَهُ خِنْجَرٌ حَيْثُ قَتَلَ فَالَّذِي يُقْتَلُ بِهِ خِنْجَرٌ</قول>
  </مقطع>
  <مقطع رقم="٣٠">وَ<قول رقم="١٢">إِنْ كَانَ في أَعْمَالِهِمْ خَيْرٌ فَالَّذِي يُجْزَوْنَ بِهِ خَيْرٌ</قول>
  </مقطع>
  <مقطع رقم="٣١">وَيَجُوْزُ أَنْ تَجْعَلَ <حرف>إنْ كَانَ خَيْرٌ</حرف> عَلَى <حرف>إِنْ وَقَعَ خَيْرٌ</حرف>
  </مقطع>
  <مقطع رقم="٣٢">كَأَنَّهُ قَالَ</مقطع>
  <مقطع رقم="٣٣">
    <قول رقم="١٣">إِنْ كَانَ خَيْرٌ فَالَّذِي يُجْزَوْنَ بِهِ خَيْرٌ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَزَعَمَ يُوْنُسُ أَنَّ الْعَرَبَ تُنْشِدُ هٰذَا الْبَيْتَ لْهُدَبةً بْنُ خَشْرَمٍ</مقطع>
  <شاهدة مقطع="٣٥" رقم="١">
    <بيت>
      <مصراع>فَإِنْ تَكُ في أَمْوَالِنَا لَا نَضِق بِهًا</مصراع>
      <مصراع>ذِرَاعا وَإِنْ صَبْرٌ فَنَصْبِرُ لِلْصَّبْرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٦">وَالنَّصْبُ فِيهِ جَيِّدٌ بالِغٌ عَلى التَّفْسِيرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٣٧">والرَّفْعُ على قَوْلِهِ <قول رقم="١٤">وَإِنْ وَقَعَ صَبْرٌ</قول> أو <قول رقم="١٥">إِنْ كَانَ فِينَا صَبْرٌ فَإِنَّا نَصْبُرُ</قول>
  </مقطع>
  <مقطع رقم="٣٨">وأَمَّا قَوْلُ الشَّاعِرِ لِنُعْمَانِ بْنِ الْمُنْذِرِ</مقطع>
  <شاهدة مقطع="٣٩" رقم="٢">
    <بيت>
      <مصراع>قَدْ قِيْلَ ذٰلِكَ إِنْ حَقًّا وَإِنْ كَذِبًا</مصراع>
      <مصراع>فَمَا اعْتِذَارُكَ مِنْ شَيْءٍ إِذَا قِيْلًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٠">فَالنَّصْبُ فِيهِ على التَّفْسِيرِ الْأَوَّلِ وَالرَّفْعُ يَجُوزُ على قَوْلِهِ</مقطع>
  <مقطع رقم="٤١">
    <قول رقم="١٦">إِنْ كَانَ فِيهِ حَقٌّ وَإِنْ كَانَ فِيهِ باطِلٌ</قول>
  </مقطع>
  <مقطع رقم="٤٢">كَمَا جَازَ ذٰلِكَ في <قول رقم="١٧">إِنْ كَانَ في أَعْمَالِهِمْ خَيْرٌ</قول>
  </مقطع>
  <مقطع رقم="٤٣">وَيَجُوزُ أَيْضًا على قَوْلِهِ <قول رقم="١٨">إِنْ وَقَعَ حَقٌّ وَإِنْ وَقَعَ كَذِبٌ</قول>
  </مقطع>
  <مقطع رقم="٤٤">وَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ <آية>وَإِنْ كَانَ ذُو عُسْرَةٍ فَنَظْرَةٌ إِلَى مَيْسَرَةٍ</آية>
  </مقطع>
  <مقطع رقم="٤٥">وَمِثْلُ ذٰلِكَ قَوْلُ الْعَرَبِ في مَثَلٍ مِنْ أَمْثَالِهِا <حرف>إِنْ لَا حَظِيَّةٌ فَلَا أَلِيَّةٌ</حرف>
  </مقطع>
  <مقطع رقم="٤٦">أَيْ إِنْ لَا تَكُنْ لَهُ في النَّاسِ حَظِيَّةٌ فَإِني غَيْرُ أَلِيَّةٍ</مقطع>
  <مقطع رقم="٤٧">كَأَنَّهَا قَالَتْ فِي الْمَعْنَى <قول رقم="١٩">إِنْ كُنْتَ مِمَّنْ لَا يُحْظَى عِنْدَهُ فَإِنِّي غَيْرُ أَلِيَّةٍ</قول>
  </مقطع>
  <مقطع رقم="٤٨">وَلَوْ عَنَتْ بِالْحَظِيِّةِ نَفْسَهَا لَمْ يَكُنْ إِلَّا نَصْبًا إِذَا جَعَلْتَ الْحَظِيَّةَ عَلَى التَّفْسِيْرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٤٩">وَمِثْلُ ذٰلِكَ <قول رقم="٢٠">قَدْ مَرَرْتُ بِرَجُلٍ إِنْ طَوَيْلًا وَإِنْ قَصِيْرًا</قول>
  </مقطع>
  <مقطع رقم="٥٠">وَ<قول رقم="٢١">ٱمْرُرْ بِأَيِّهِمْ أَفْضَلُ إِنْ زَيْدًا وَإِنْ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٥١">وَ<قول رقم="٢٢">قَدْ مَرَرْتُ بِرَجُلٍ قَبْلُ إِنْ زَيْدًا وَإِنْ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٥٢">لَا يَكُوْنُ في هٰذَا إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="٥٣">لِأَنَّهُ لَّا يَجُوْزُ أَنْ تَحْمَلَ الـ<حرف>طَّوِيْلَ</حرف> وَالْـ<حرف>قَصِيْرَ</حرف>
  </مقطع>
  <مقطع رقم="٥٤">عَلَى غَيْرِ الْأَوَّلِ وَلَا <حرف>زَيْدًا</حرف> وَلَا <حرف>عَمْرًا</حرف>
  </مقطع>
  <مقطع رقم="٥٥">وَأَمَّا <حرف>إِنْ حَقٌّ وَإِنْ كَذِبٌ</حرف>
  </مقطع>
  <مقطع رقم="٥٦">فَقَدْ تَسْتَطِيْعُ أَنْ لَا تَحْمَلَهُ عَلَى الْأَوَّلِ</مقطع>
  <مقطع رقم="٥٧">فَتَقُوْلَ <قول رقم="٢٣">إِنْ كَانَ فِيْهِ حَقٌّ أَوْ كَانَ فِيْهِ كَذِبٌ</قول>
  </مقطع>
  <مقطع رقم="٥٨">أَوْ <قول رقم="٢٤">إِنْ وَقَعَ حَقٌّ أَوْ بَاطِلٌ</قول>
  </مقطع>
  <مقطع رقم="٥٩">وَلَا يَسْتَقِيْمُ في ذَا أَنْ تُرِيْدَ غَيْرَ الْأَوَّلِ إِذَا ذَكَرْتَهُ</مقطع>
  <مقطع رقم="٦٠">وَلَا تَسْتَطِيْعُ أَنْ تَقُوْلَ <قول رقم="٢٥">إِنْ كَانَ فِيْهِ طَوْيِلٌ أَوْ كَانَ فِيْهِ زِيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٦١">وَلَا يَجُوْزُ عَلَى <حرف>إِنْ وَقَعَ</حرف>
  </مقطع>
  <مقطع رقم="٦٢">وَقَالَتْ لَيْلَىَ الْأَخْيَلِيَّةُ</مقطع>
  <شاهدة مقطع="٦٣" رقم="٣">
    <بيت>
      <مصراع>لَا تَقَّرَبَنَّ الْدَّهْرَ آلَ مُطَرِّفٍ</مصراع>
      <مصراع>إِنْ ظَالِمًا أَبَدًا وَإِنْ مَظْلُوْمًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٤">وَقَالَ ابْنُ هَمَّامٍ الْسَّلُوْلِىِّ</مقطع>
  <شاهدة مقطع="٦٥" رقم="٤">
    <بيت>
      <مصراع>وَأَحْضَرْتُ عُذْرِىٍّ عَلَيْهِ الشُهُوّدّ</مصراع>
      <مصراع>إِنَّ عَاذِرا لِىَ وَإِنْ تَارِكًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٦">فَنَصَبَهُ لِأَنَّهُ عَنَى الْأَمِيرَ الْمُخَاطَبَ</مقطع>
  <مقطع رقم="٦٧">وَلَوْ قَالَ <قول رقم="٢٦">إِنْ عَاذِرٌ لِي وَإِنْ تَارِكٌ</قول>
  </مقطع>
  <مقطع رقم="٦٨">يُرِيْدُ <قول رقم="٢٧">إِنْ كَانَ لِي في النَّاسِ عَاذِرٌ أَوْ غَيْرُ عَاذِرٍ</قول> جَازَ</مقطع>
  <مقطع رقم="٦٩">وَقَالَ النَّابِغَةُ الذُّبْيَانِي</مقطع>
  <شاهدة مقطع="٧٠" رقم="٥">
    <بيت>
      <مصراع>حَدِبَتْ عَلَىَّ بُطُوْنُ ضِنَّةَ كُلِّهًا</مصراع>
      <مصراع>إِنْ ظَالِمَا فِيْهِمْ وَإِنْ مَظْلُوْمًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧١">وَمِنْ ذٰلِكَ أَيْضًا قَوْلُكَ <قول رقم="٢٨" مثال="١">مَرَرْتُ بِرَجُلٍ صَالِحٍ وَإِنْ لَا صَالِحًا فَطالِحٌ</قول>
  </مقطع>
  <مقطع رقم="٧٢">وَمِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول رقم="٢٩">إِنْ لَا صَالِحًا فَطَالِحًا</قول>
  </مقطع>
  <مقطع رقم="٧٣">كَأَنَّهُ يَقُوْلُ <قول رقم="٣٠">إِنْ لَا يَكُنْ صَالِحًا فَقَدْ مَرَرْتُ بِهِ أَوْ لَقِيْتُهُ طَالِحًا</قول>
  </مقطع>
  <مقطع رقم="٧٤">وَزَعَمَ يُوْنُسُ أَنَّ مِنَ الْعَرَبِ مَنْ يَقُوْلُ <قول رقم="٣١">إِنْ لَا صَالِحٍ فَطالِحٍ</قول>
  </مقطع>
  <مقطع رقم="٧٥">عَلَى <قول رقم="٣٢">إِنْ لَا أَكُنْ مَرَرْتُ بِصَالِحٍ فَبِطالِحٍ</قول>
  </مقطع>
  <مقطع رقم="٧٦">وَهٰذَا قَبِيْحٌ ضَعِيْفٌ لِأَنَّكَ تُضْمِرُ بَعْدَ <حرف>إِنْ لَا</حرف> فِعْلًا آخَرَ فِيْهِ حَذْفٌ</مقطع>
  <مقطع رقم="٧٧">غَيْرَ الَّذِd تُضْمِرُ بَعْدَ <حرف>إِنْ لَا</حرف> فَىِ قَوْلِكَ إِنْ <قول رقم="٣٣">لَا يَكُنْ صَالِحًا فَطالِحٌ</قول>
  </مقطع>
  <مقطع رقم="٧٨">وَلَا يَجُوْزُ أَنْ يُضْمَرَ الْجَارِّ وَلَكِنَّهُمْ لَمَّا ذَكَرُوْهُ في أَوَّلِ كَلَامِهِمْ شَبَّهُوْهُ بِغَيْرِهِ مِنَ الْفِعْلِ</مقطع>
  <مقطع رقم="٧٩">وَكَانَ هٰذَا عِنْدَهُمْ أَقْوَى إِذَا أُضْمِرَتْ <حرف>رُبَّ</حرف> وَنَحْوُهَا في قَوْلِهِمْ</مقطع>
  <شاهدة مقطع="٨٠" رقم="٦">
    <بيت>
      <مصراع>وَبَلْدَةٍ لَيْسَ بِهَا أَنِيْسُ</مصراع>
      <مصراع>إلّا اليعافير وإلّا العيسُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨١">وَمِنْ ثَمَّ قَالَ يُوْنُسُ <قول رقم="٣٤">ٱمْرُرْ عَلَى أَيُّهُمْ أَفْضَلُ إِنْ زْيَدٍ وَإِنْ عَمْرِوٍ</قول>
  </مقطع>
  <مقطع رقم="٨٢">يَعْنِي <قول رقم="٣٥">إِنْ مَرَرْتَ بِزَيْدٍ أَوْ مَرَرْتَ بِعَمْرِو</قول>
  </مقطع>
  <مقطع رقم="٨٣">وَاعْلَمْ أَنَّهُ لَا يَنْتَصِبْ شَيْءٌ بَعْدَ <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع رقم="٨٤">وَلَا يَرْتَفِعُ إِلَّا بِفِعْلٍ</مقطع>
  <مقطع رقم="٨٥">لِأَنَّ <حرف>إِنْ</حرف> مِنَ الْحُرُوْفِ الَّتِي يُبْنَى عَلَيْهَا الْفِعْلُ وَهِىَ <حرف>إِنْ</حرف> الْمُجَازَاةِ</مقطع>
  <مقطع رقم="٨٦">وَلَيْسَتْ مِنَ الْحُرُوْفِ الَّتِي يُبْتَدَأُ بَعْدَهَا الْأَسْمَاءُ لِيُبْنَى عَلَيْهَا الْأَسْمَاءُ</مقطع>
  <مقطع رقم="٨٧">فَإِنَّمَا أَرَادَ بِقَوْلِهِ</مقطع>
  <مقطع رقم="٨٨">
    <قول رقم="٣٦">إِنْ زَيْدٍ وَإِنْ عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٨٩">إِنْ مَرَرْتَ بِزَيْدٍ أَوْ مَرَرْتَ بِعَمْرٍو فَجَرَىَ الْكَلَامُ عَلَى فِعْلٍ آخَرَ</مقطع>
  <مقطع رقم="٩٠">وَانْجَرَّ الْاسْمُ بِالْبَاءِ لِأَنَّهُ لَا يَصِلُ إِلَيْهِ الْفِعْلُ إِلّا بِالْبَاءِ</مقطع>
  <مقطع رقم="٩١">كَمَا أَنَّهُ حِيْنَ نَصَبَهُ كَانَ مَحْمُولًا عَلَى <حرف>كَانَ</حرف> أُخْرَى لَا عَلَى الْفِعْلِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٩٢">وَمَنْ رَأَى الْجَرَّ في هٰذَا قَالَ</مقطع>
  <مقطع رقم="٩٣">
    <قول رقم="٣٧">مَرَرْتُ بِرَجُلٍ إِنْ زْيَدٍ وَإِنْ عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٩٤">يُرِيْدُ <قول رقم="٣٨">إِنْ كُنْتُ مَرَرْتُ بِزَيْدٍ أَوْ كُنْتُ مَرَرْتُ بِعَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٩٥">وَلَوْ قُلْتَ <قول رقم="٣٩">عِنْدَنَا أَيِّهُمْ أَفْضَلُ أَوْ عِنْدَنَا رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="٩٦">ثُمَّ قُلْتَ <قول رقم="٤٠">إِنْ زَيْدًا وَإِنْ عَمْرًا</قول>
  </مقطع>
  <مقطع رقم="٩٧">كَانَ نَصْبُهُ عَلَى <حرف>كَانَ</حرف>
  </مقطع>
  <مقطع رقم="٩٨">وَإِنْ رَفَعْتَهُ رَفَعْتَهُ عَلَى <حرف>كَانَ</حرف>
  </مقطع>
  <مقطع رقم="٩٩">كَأَنَّكَ قُلْتَ <قول رقم="٤١">إِنْ كَانَ عِنْدَنَا زِيْدٌ أَوْ كَانَ عِنْدَنَا عُمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١٠٠">وَلَا يَكُوْنُ رَفْعُهُ عَلَى <حرف>عِنْدَنًا</حرف> مِنْ قِبَلِ أَنَّ <حرف>عِنْدَنًا</حرف> لَيْسَ بِفِعْلٍ</مقطع>
  <مقطع رقم="١٠١">وَلَا يَجُوْزُ بَعْدَ <حرف>إِنْ</حرف> أَنْ تَبْنَى <حرف>عِنْدَنًا</حرف> عَلَى الْأَسْمَاءِ</مقطع>
  <مقطع رقم="١٠٢">وَلَا الْأَسْمَاءُ تُبْنَى عَلَى <حرف>عِنْدَهُ</حرف>
  </مقطع>
  <مقطع رقم="١٠٣">كَمَا لَمْ يَجُزْ لَكَ أَنْ تَبْنِيَ بَعْدَ <حرف>إِنْ</حرف> الْأَسْمَاءَ عَلَى الْأَسْمَاءِ</مقطع>
  <مقطع رقم="١٠٤">وَاعْلَمْ أَنَّهُ لَا يَجُوْزُ لَكَ أَنْ تَقُولَ</مقطع>
  <مقطع رقم="١٠٥">
    <قول رقم="٤٢">عَبْدَ اللّٰهِ الْمَقْتُوْلَ</قول>
  </مقطع>
  <مقطع رقم="١٠٦">وَأَنْتَ تُرِيْدُ <قول رقم="٤٣">كُنْ عَبْدَ اللّٰهِ الْمَقْتُوْلَ</قول>
  </مقطع>
  <مقطع رقم="١٠٧">لِأَنَّهُ لَيْسَ فِعْلًا يَصِلُ مِنْ شَيْءٍ إِلَى شَيْءٍ</مقطع>
  <مقطع رقم="١٠٨">وَلِأَنَّكَ لَسْتَ تُشِيْرُ لَهُ إِلَى أَحَدٍ</مقطع>
  <مقطع رقم="١٠٩">وَمِنَ ذٰلِكَ قَوْلُ الْعَرَبِ</مقطع>
  <شاهدة مقطع="١١٠" رقم="٧">
    <بيت>
      <مصراع>مِنْ لَدُ شَوْلَا فَإِلَىّ إِتْلَائِهًا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١١">نَصَبَ لِأَنَّهُ أَرَادَ زَمَانًا</مقطع>
  <مقطع رقم="١١٢">وَالشَّوْلُ لَا يَكُوْنُ زَمَانًا وَلَا مَكَانًا</مقطع>
  <مقطع رقم="١١٣">فَيَجُوْزُ فِيْهَا الْجَرِّ كَقَوْلِكَ</مقطع>
  <مقطع رقم="١١٤">
    <قول رقم="٤٤">مِنْ لَدُ صَلَاةِ الْعَصْرِ إِلَى وَقْتِ كَذًا</قول>
  </مقطع>
  <مقطع رقم="١١٥">
    <قول رقم="٤٥">وَكَقَوْلِكَ مِنْ لَدُ الْحَائِطِ إِلَى مَكَانِ كَذًا</قول>
  </مقطع>
  <مقطع رقم="١١٦">فَلَمَّا أَرَادَ الزَّمَانَ حَمَلَ الشَّوْلَ عَلَى شَيْءٍ يَحْسُنُ أَنْ يَكُوْنَ زَمَانًا إِذَا عَمِلَ في الشَّوْلِ</مقطع>
  <مقطع رقم="١١٧">وَلَمْ يَحْسُنْ إِلَّا ذَا كَمَا لَمْ يَحْسُنْ ابْتِدَاءُ الْأَسْمَاءِ بَعْدَ <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع رقم="١١٨">حَتَّى أَضْمَرَتَ مَا يَحْسُنُ أَنْ يَكُوْنَ بَعْدَهَا عَامِلًا في الْأَسْمَاءُ</مقطع>
  <مقطع رقم="١١٩">فَكَذٰلِكَ هٰذَا كَأَنَّكَ قُلْتَ</مقطع>
  <مقطع رقم="١٢٠">
    <قول رقم="٤٦">مِنْ لَدُ أَنْ كَانَتْ شَوْلًا فَإِلَى إِتْلَائِهًا</قول>
  </مقطع>
  <مقطع رقم="١٢١">وَقَدْ جَرَّهُ قَوْمٌ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="١٢٢">وَجَعَلُوْهُ بِمَنْزِلَةِ الْمَصْدَرِ حِيْنَ جَعَلُوْهُ عَلَى الْحِيْنِ</مقطع>
  <مقطع رقم="١٢٣">وَإِنَّمَا يُرِيْدُ <حرف>حِيْنَ كَذَا وَكَذًا</حرف> وَإِنْ لَمْ يَكُنْ في قُوَّةِ الْمَصَادِرَ لِأَنَّهُ لَا يَتَصَرَّفُ تَصَرِّفَهًا</مقطع>
  <مقطع رقم="١٢٤">وَاعْلَمْ أَنَّهُ لَيْسَ كُلِّ حَرْفٍ يَظْهَرُ بَعْدَهُ الْفِعْلُ يُحْذَفُ فِيْهِ الْفِعْلُ</مقطع>
  <مقطع رقم="١٢٥">وَلَكِنَّكَ تُضْمِرُ بَعْدَ مَا أَضْمَرَتْ فِيْهِ الْعُرَبُ مَنْ الْحُرُوْفِ وَالْمَوَاضِعِ</مقطع>
  <مقطع رقم="١٢٦">وَتُظْهِرُ مَا أَظْهَرُوْا</مقطع>
  <مقطع رقم="١٢٧">وَتُجْرِي هَذِهِ الْأَشْيَاءَ الَّتِي هِيَ عَلَى مَا يَسْتَخِفُّوْنَ</مقطع>
  <مقطع رقم="١٢٨">بِمَنْزِلَةِ مَا يَحْذِفُوْنَ مِنْ نَفْسِ الْكَلَامِ</مقطع>
  <مقطع رقم="١٢٩">وَمِمَّا هُوَ الْكَلَامُ عَلَى مَا أَجْرَوْا</مقطع>
  <مقطع رقم="١٣٠">فَلَيْسَ كُلِّ حَرْفٍ يُحْذَفُ مِنْهُ شَيءٌ وَيُثْبَتُ فِيْهِ</مقطع>
  <مقطع رقم="١٣١">نَحْوُ <حرف>يَكُ</حرف> وَ<حرف>يَكُنْ</حرف>
  </مقطع>
  <مقطع رقم="١٣٢">وَ <حرف>لَمْ أُبَلْ</حرف> و<حرف>أُبَالِ</حرف>
  </مقطع>
  <مقطع رقم="١٣٣">لَمْ يَحْمِلُهُمْ ذَاكَ عَلَى أَنْ يَفْعَلُوْهُ بِمِثْلِهِ</مقطع>
  <مقطع رقم="١٣٤">وَلَا يَحْمِلُهُمْ إِذَا كَانُوْا يُثْبِتُوْنَ</مقطع>
  <مقطع رقم="١٣٥">فَيَقُوْلُوْنَ في <حرف>مُرْ</حرف>
  <حرف>أُومُرْ</حرف>
  </مقطع>
  <مقطع رقم="١٣٦">أَنْ يَقُوْلُوْا في <حرف>خُذْ</حرف>
  <حرف>أُوْخُذْ</حرف>
  </مقطع>
  <مقطع رقم="١٣٧">وَفِي <حرف>كُلْ</حرف>
  <حرف>أُوكُلْ</حرف>
  </مقطع>
  <مقطع رقم="١٣٨">فَقِفْ عَلَى هَذِهِ الْأَشْيَاءِ حَيْثُ وَقَفُوْا ثُمَّ قِسْ بَعْدُ ( هارون: فَسِّرْ)</مقطع>
  <مقطع رقم="١٣٩">وَأَمَّا قَوْلُ الْشَّاعِرِ</مقطع>
  <شاهدة مقطع="١٤٠" رقم="٨">
    <بيت>
      <مصراع>لَقَدْ كَذَبَتْكَ نَفْسُكَ فَاكْذِبَنْها</مصراع>
      <مصراع>فَإِنْ جَزَعَا وَإِنْ إِجْمَالَ صَبْرِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٤١">فَهٰذَا عَلَى <حرف>إِمَّا</حرف> وَلَيْسَ <حرف>إِنِ</حرف> الْجَزَاءِ</مقطع>
  <مقطع رقم="١٤٢">
    <بدل>
      <يعقوب>وَلَيْسَ على قَوْلِكَ</يعقوب>
    </بدل>
    <قول رقم="٤٧">إِنْ حَقًّا وَإِنْ كِذِبًا</قول>
  </مقطع>
  <مقطع رقم="١٤٣">فَهٰذَا عَلَى <حرف>إِمًّا</حرف> مَحْمُوْلٌ</مقطع>
  <مقطع رقم="١٤٤">أَلَا تَرَى أَنَّكَ تُدْخِلُ الْفَاءَ وَلَوْ كَانَتْ عَلَى <حرف>إِنْ</حرف> الْجَزَاءِ</مقطع>
  <مقطع رقم="١٤٥">وَقَدْ اسْتَقْبَلْتَ الْكَلَامَ لَاحْتَجْتَ إِلَى الْجَوَابِ</مقطع>
  <مقطع رقم="١٤٦">فَلَيْسَ قَوْلُهُ <قول رقم="٤٨">فَإِنْ جَزَعًا</قول> كَقَوْلِهِ <قول رقم="٤٩">إِنْ حَقًّا وَإِنْ كَذِبًا</قول>
  </مقطع>
  <مقطع رقم="١٤٧">وَلَكِنَّهُ عَلَى قَوْلِهِ تَعَالَى <آية>فَإِمَّا مَنًّا بَعْدُ وَإِمَّا فِدَاءً</آية>
  </مقطع>
  <مقطع رقم="١٤٨">وَلَوْ قُلْتَ <قول رقم="٥٠">فَإِنْ جَزَعٌ وَإِنْ إِجْمَالُ صَبْرٍ</قول>
  </مقطع>
  <مقطع رقم="١٤٩">كَانَ جَائِزًا كَأَنَّكَ قُلْتَ <قول رقم="٥١">فَإِمَّا أَمْرِي جَزَعٌ وَإِمَّا إِجْمَالُ صَبْرٍ</قول>
  </مقطع>
  <مقطع رقم="١٥٠">لِأَنَّكَ لَوْ <بدل>
  <يعقوب>صَحَّحْتَهُمًا</يعقوب>
  </بدل> فَقُلْتَ <حرف>إِمًّا</حرف> جَازَ ذٰلِكَ فِيْهًا</مقطع>
  <مقطع رقم="١٥١">وَلَا يَجُوْزُ طَرْحُ <حرف>مًا</حرف> مِنْ <حرف>إِمًّا</حرف> إِلَّا في الشِّعْرِ</مقطع>
  <مقطع رقم="١٥٢">قَالَ الْنَّمِرُ بِنُ تَوْلَبٍ</مقطع>
  <شاهدة مقطع="١٥٣" رقم="٩">
    <بيت>
      <مصراع>سَقَتْهُ الْرَّوَاعِدُ مِنْ صَيفَ</مصراع>
      <مصراع>وَإِنْ مِنْ خَرِيْفٍ فَلَنْ يَعْدَمًا</مصراع>
    </بيت>
  </شاهدة>
