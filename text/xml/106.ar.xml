<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٢٦"
     درنبورج="١-١٩٣"
     البكاء="٢-٨١"
     هارون="٢-١٨"
     يعقوب="٢-١٦"
     رقم="١٠٦">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ مَا يُجْرَى عَلَيْهِ صِفَةُ مَا كَانَ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٢">وَصِفَةُ مَا الْتَبَسَ بِهِ أَوْ بِشَيْءٍ مِنْ سَبَبِهِ</مقطع>
  </عنوان>
  <مقطع رقم="٣">كَمَجْرَى صِفَتِهِ الَّتِي خَلَصَتْ لَهُ</مقطع>
  <مقطع رقم="٤">هٰذَا مَا كَانَ مِنْ ذٰلِكَ عَمَلًا</مقطع>
  <مقطع رقم="٥">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٦">
    <قول رقم="١">مَرَرْتُ بِرَجُلٍ ضَاْرِبٍ أَبُوْهُ رَجُلًا</قول>
  </مقطع>
  <مقطع رقم="٧">وَ<قول رقم="٢">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ أَبُوْهُ رَجُلًا</قول>
  </مقطع>
  <مقطع رقم="٨">وَمِنْ ذٰلِكَ أَيْضًا</مقطع>
  <مقطع رقم="٩">
    <قول رقم="٣">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ أَبَاهُ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="١٠">وَ<قول رقم="٤">مَرَرْتُ بِرَجُلٍ مُخَالِطٍ أَبَاهُ دَاْءٌ</قول>
  </مقطع>
  <مقطع رقم="١١">فَالْمَعْنَى فِيْهِ عَلَى وَجْهَيْنِ</مقطع>
  <مقطع رقم="١٢">إِنْ شِئْتَ جَعَلْتَهُ يُلَازِمُهُ وَيُخَالِطُهُ فِيْمَا يُسْتَقْبَلُ</مقطع>
  <مقطع رقم="١٣">وَإِنَّ شِئْتَ جَعَلْتَهُ عَمَلًا كَاْئِنًا فِي حَالِ مُرُورِكَ</مقطع>
  <مقطع رقم="١٤">وَإِنْ أَلْقَيْتَ التَّنْوِيْنَ وَأَنْتَ تُرِيْدُ مَعْنَاهُ جَرَىْ مِثْلَهُ [ إِذَا كَانَ ] مِنَوَّنَا</مقطع>
  <مقطع رقم="١٥">وَيُدُّلُكَ عَلَى ذٰلِكَ أَنَّكَ تَقُوْلُ <قول رقم="٥">مَرَرْتُ بِرَجُلٍ مَلَازِمِكْ</قول>
  </مقطع>
  <مقطع رقم="١٦">فَيَحْسُنُ وَيَكُوْنُ صِفَةً لِلنَّكِرَةِ بِمَنْزِلَتِهِ إِذَا كَانَ مُنَوَّنًا وَحِيْنَ قُلْتَ</مقطع>
  <مقطع رقم="١٧">
    <قول رقم="٦">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ أَبَاهُ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="١٨">وَحِيْنَ قُلْتَ <قول رقم="٧">مَرَرْتُ بِرَجُلٍ مُلَازِمِ أَبِيْهِ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="١٩">فَكَأَنَّكَ قُلْتَ فَِي جَمِيْعِ هٰذَا</مقطع>
  <مقطع رقم="٢٠">
    <قول رقم="٨">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ أَبَاهُ</قول>
  </مقطع>
  <مقطع رقم="٢١">وَ<قول رقم="٩">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ أَبِيْهِ</قول>
  </مقطع>
  <مقطع رقم="٢٢">لِأَنَّ هٰذَا يَجْرِي مَجْرَى الصِّفَةِ الَّتِي تَكُوْنُ خَالِصَةً لِلْأَوَّلِ</مقطع>
  <مقطع رقم="٢٣">وَتَقُوْلُ <قول رقم="١٠">مَرَرْتُ بِرَجُلٍ مُخَالِطِ بَدَنِهِ [أَوْ جَسَدِهِ] دَاْءٌ</قول>
  </مقطع>
  <مقطع رقم="٢٤">فَإِنْ أَلْقَيْتَالتَّنْوِيْنَ جَرَى مَجْرَى الْأَوَّلِ إِذَا أَرَدْتَ ذٰلِكَ الْمَعْنَى</مقطع>
  <مقطع رقم="٢٥">وَلَكِنَّكَ تُلْقِي التَّنْوِيْنَ تَخْفِيْفًا</مقطع>
  <مقطع رقم="٢٦">فَإِنْ قُلْتَ</مقطع>
  <مقطع رقم="٢٧">
    <قول رقم="١١">مَرَرْتُ بِرَجُلٍ مُخَالِطِهِ دَاْءٌ</قول>
  </مقطع>
  <مقطع رقم="٢٨">وَأَرَدْتَ مَعْنَى [ الْتَّنْوِيْنِ جَرَى عَلَى] الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٩">كَأَنَّكَ قُلْتَ <قول رقم="١٢">مَرَرْتُ بِرَجُلٍ مُخَالِطٍ إِيَّاهُ دَاْءٌ</قول>
  </مقطع>
  <مقطع رقم="٣٠">فَهٰذَا تَمْثِيْلٌ وَإِنْ كَانَ يَقْبُحُ فِي الْكَلَامِ</مقطع>
  <مقطع رقم="٣١">فَإِذَا كَانَ يَجْرِي عَلَيْهِ إِذَا الْتَبَسَ بِغَيْرِهِ</مقطع>
  <مقطع رقم="٣٢">فَهُوَ إِذَا الْتَبَسَ بِهِ أَحْرَى أَنْ يَجْرِيَ عَلَيْهِ</مقطع>
  <مقطع رقم="٣٣">وَإِنْ زَعَمَ زَاْعِمٌ أَنَّهُ يَقُوْلُ</مقطع>
  <مقطع رقم="٣٤">
    <قول رقم="١٣">مَرَرْتُ بِرَجُلٍ مُخَالِطِ بَدَنِهِ دَاْءٌ</قول>
  </مقطع>
  <مقطع رقم="٣٥">فَفَرَقَ بَيْنَهُ وَبَيْنَ الْمُنَوَّنِ</مقطع>
  <مقطع رقم="٣٦">قِيْلَ لَهُ</مقطع>
  <مقطع رقم="٣٧">
    <قبس>أَلَسْتَ تَعْلَمُ أَنَّ الْصِّفَةَ إِذَا كَانَتْ لِلْأَوَّلِ فَالتَّنْوِيْنُ وَغَيْرُ التَّنْوِيْنِ سَوَاْءٌ</قبس>
  </مقطع>
  <مقطع رقم="٣٨">
    <قبس>إِذَا أَرَدْتَ بِإِسْقَاْطِ التَّنْوِيْنِ مَعْنَى التَّنْوِيْنِ</قبس>
  </مقطع>
  <مقطع رقم="٣٩">نَحْوَ قَوْلِكَ</مقطع>
  <مقطع رقم="٤٠">
    <قول رقم="١٤">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ أَبَاكَ</قول>
  </مقطع>
  <مقطع رقم="٤١">وَ<قول رقم="١٥">مَرَرْتُ بِرَجُلٍ مُلَازِمِ أَبِيكَ [أَوْ مَلَازِمِكْ]</قول>
  </مقطع>
  <مقطع رقم="٤٢">فَإِنَّهُ لَا يَجِدُ بُدًّا مِنْ أَنْ يَقُوْلَ <قبس>نَعَمْ</قبس>
  </مقطع>
  <مقطع رقم="٤٣">وَإِلّا خَالَفَ جَمِيْعَ الْعَرَبِ وَالنَّحْوِيِّيْنَ</مقطع>
  <مقطع رقم="٤٤">فَإِذَا قَالَ ذٰلِكَ قُلْتَ</مقطع>
  <مقطع رقم="٤٥">
    <قبس>أَفَلَسْتَ تَجْعَلُ هٰذَا الْعَمَلَ إِذَا كَانَ مُنَوَّنًا وَكَانَ لِشَيْءٍ مِنْ سَبَبِ الْأَوَّلِ أَوْ الْتَبَسَ بِهِ بِمَنْزِلَتِهِ إِذَا كَانَ لِلْأَوَّلِ</قبس>
  </مقطع>
  <مقطع رقم="٤٦">فَإِنَّهُ قَاْئِلٌ <قبس>نَعَمْ</قبس>
  </مقطع>
  <مقطع رقم="٤٧">وَكَأَنَّكَ قُلْتَ</مقطع>
  <مقطع رقم="٤٨">
    <قول رقم="١٦">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ</قول>
  </مقطع>
  <مقطع رقم="٤٩">فَإِذَا قَالَ ذٰلِكَ قُلْتَ لَهُ</مقطع>
  <مقطع رقم="٥٠">
    <قبس>مَا بَالُ التَّنْوِيْنِ وَغَيْرِ التَّنْوِيْنِ اسْتَوَيَا حَيْثُ كَانَا لِلْأَوَّلِ وَاْخْتَلَفَا حَيْثُ كَانَا لِلْآخَرِ وَقَدْ زَعَمْتَ أَنَّهُ يَجْرِي عَلَيْهِ إِذَا كَانَ لِلْآخَرِ كمَجْرَاهُ إِذَا كَانَ لِلْأَوَّلِ</قبس>
  </مقطع>
  <مقطع رقم="٥١">وَلَوْ كَانَ كَمَا يَزْعُمُوْنَ لَقُلْتَ <قول رقم="١٧">مَرَرْتُ بِعَبْدِ اللّٰهِ الْمُلَازِمِهِ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="٥٢">لِأَنَّ الصِّفَةَ الْمَعْرِفَةَ تَجْرِي عَلَى الْمَعْرِفَةِ</مقطع>
  <مقطع رقم="٥٣">كَمَجْرَى الْصِّفَةِ الْنَّكِرَةِ عَلَى الْنَّكِرَةِ</مقطع>
  <مقطع رقم="٥٤">وَلَوْ أَنَّ هٰذَا الْقِيَاْسَ لَمْ تَكُنْ الْعَرَبُ الْمَوْثُوقُ بِعَرَبَيِّتِهَا تَقُولُهُ لَمْ يُلْتَفَتْ إِلَيْهِ</مقطع>
  <مقطع رقم="٥٥">وَلَكِنَّا سَمِعْنَاهَا تُنْشِدُ هٰذَا الْبَيْتَ جَرًّا</مقطع>
  <مقطع رقم="٥٦">وَهُوَ قَوْلُ ابْنِ مَيَّاْدَةَ الْمُرَّى مِنْ غَطَفَانَ</مقطع>
  <شاهدة مقطع="٥٧" رقم="١">
    <بيت>
      <مصراع>وَاْرْتَشْنَ حِيْنَ أَرَدْنَ أَنْ يَرْمِيْنَنَا</مصراع>
      <مصراع>نَبْلِا بِلَا رِيْشٍ وَلَا بِقِدَاْحِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَنَظَرْنَ مِنْ خَلَلِ الْخُدُورِ بِأَعْيُنٍ</مصراع>
      <مصراع>مَرْضَى مُخَاْلِطِهَا الْسَّقَامُ صِحَاْحِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٨">وَسَمِعْنَا مِنْ الْعَرَبِ مَنْ يَرْوِيْهِ</مقطع>
  <مقطع رقم="٥٩">وَيَرْوِي الْقَصِيْدَةَ الَّتِي فِيْهَا هٰذَا الْبَيْتُ لَمْ يُلَقِّنْهُ أَحَدٌ هَكَذَا</مقطع>
  <مقطع رقم="٦٠">وَأَنْشَدَ غَيْرُهُ مِنْ الْعَرَبِ بَيْتًا آخَرَ فَأَجْرَوْهُ هٰذَا الْمَجْرَى</مقطع>
  <مقطع رقم="٦١">وَهُوَ قَوْلُهُ</مقطع>
  <شاهدة مقطع="٦٢" رقم="٢">
    <بيت>
      <مصراع>حَمَيْنَ الْعَرَاقِيْبَ الْعَصَا وَتَرَكْنَهُ</مصراع>
      <مصراع>بِهِ نَفَسٌ عَالٍ مُخَالِطُهُ بُهْرُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٣">فَالْعَمَلُ الَّذِي لَمْ يَقَعْ [ وَالْعَمَلُ ] الْوَاقِعُ الثَّاْبِتُ فَِي هٰذَا الْبَاْبِ سَوَاْءٌ</مقطع>
  <مقطع رقم="٦٤">وَهُوَ الْقِيَاْسُ وَقَوْلُ الْعَرَبِ</مقطع>
  <مقطع رقم="٦٥">فَإِنْ زَعَمُوْا أَنَّ نَاْسًا مِنْ الْعَرَبِ يَنْصِبُوْنَ هٰذَا</مقطع>
  <مقطع رقم="٦٦">فَهُمْ يَنْصِبُوْنَ <قول رقم="١٨">بِهِ دَاْءٌ مُخَالِطَهُ</قول>
  </مقطع>
  <مقطع رقم="٦٧">وَهُوَ صِفَةٌ لِلْأَوَّلِ</مقطع>
  <مقطع رقم="٦٨">وَتَقُوْلُ <قول رقم="١٩">هٰذَا غُلَامٌ لَكَ ذَاهِبًا</قول>
  </مقطع>
  <مقطع رقم="٦٩">وَلَوْ قَالَ <قول رقم="٢٠">مَرَرْتُ بِرَجُلٍ قَاْئِمًا</قول>
  </مقطع>
  <مقطع رقم="٧٠">جَاْزَ فَالنَّصْبُ عَلَى هٰذَا</مقطع>
  <مقطع رقم="٧١">وَإِنَّمَا ذَكَرْنَا هٰذَا لِانَّ نَاْسًا مِنْ النَّحْوِيِّيْنَ يُفَرِّقُوْنَ بَيْنَ التَّنْوِيْنِ وَغَيْرِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٧٢">وَيُفَرِّقُوْنَ إِذَا لَمْ يُنَوِّنُوا بَيْنَ الْعَمَلِ الثَّاْبِتِ الَّذِي لَيْسَ فِيْهِ عِلَاجٌ يَرَوْنَهُ</مقطع>
  <مقطع رقم="٧٣">نَحْوَ <حرف>الْآخِذِ</حرف> وَ<حرف>اللَّاْزِمِ</حرف> وَ<حرف>الْمُخَالِطِ</حرف> وَمَا أَشْبَهَهُ</مقطع>
  <مقطع رقم="٧٤">وَبَيْنَ مَا كَانَ عِلَاجًا يَرَوْنَهُ</مقطع>
  <مقطع رقم="٧٥">نَحْوَ <حرف>الضَّاْرِبِ</حرف> وَ<حرف>الْكَاْسِرِ</حرف>
  </مقطع>
  <مقطع رقم="٧٦">فَيَجْعَلُوْنَ هٰذَا رَفْعًا عَلَى كُلِّ حَالٍ</مقطع>
  <مقطع رقم="٧٧">وَيَجْعَلُوْنَ اللَّاْزِمَ وَمَا أَشْبَهَهُ نَصَبًا إِذَا كَانَ وَاقِعًا</مقطع>
  <مقطع رقم="٧٨">وَيَجْعَلُهُ عَلَى كُلِّ حَالٍ رَفْعًا إِذَا كَانَ غَيْرَ وَاقِعٍ</مقطع>
  <مقطع رقم="٧٩">وَهٰذَا قَوْلُ يُوْنُسَ وَالْأَوَّلُ قَوْلُ عِيْسَىْ</مقطع>
  <مقطع رقم="٨٠">فَإِذَا جَعَلَهُ ٱسْمًا لَمْ يَكُنْ فِيْهِ إِلَّا الْرَّفْعُ عَلَى كُلِّ حَالٍ</مقطع>
  <مقطع رقم="٨١">وَتَقُوْلُ <قول رقم="٢١">مَرَرْتُ بِرَجُلٍ مُلَازِمُهُ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="٨٢">أَيْ <قول رقم="٢٢">مَرَرْتُ بِرَجُلٍ صَاْحِبُ مُلَازَمَتِهِ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="٨٣">فَصَاْرَ [ هٰذَا ] كَقَوْلِكَ <قول رقم="٢٣">مَرَرْتُ بِرَجُلٍ أَخُوْهُ رَجُلٌ</قول>
  </مقطع>
  <مقطع رقم="٨٤">وَتَقُوْلُ عَلَى هٰذَا الْحَدِّ <قول رقم="٢٤">مَرَرْتُ بِرَجُلٍ مُلاْزِمُوهُ بَنُوْ فُلَانٍ</قول>
  </مقطع>
  <مقطع رقم="٨٥">فَقَوْلُكَ <حرف>مُلاْزِمُوهُ</حرف> يَدَلُّكَ عَلَى أَنَّهُ ٱسْمٌ</مقطع>
  <مقطع رقم="٨٦">وَلَوْ كَانَ عَمَلًا لَقُلْتَ <قول رقم="٢٥">مَرَرْتُ بِرَجُلٍ مُلَازِمِهِ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٧">كَأَنَّكِ قُلْتَ <قول رقم="٢٦">مَرَرْتُ بِرَجُلٍ مُلَازِمٍ إِيَّاهُ قَوْمُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٨">أَيْ قَدْ لَزِمَ إِيَّاهُ قَوْمُهُ</مقطع>

