<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٩"
     درنبورج="١-٨١"
     البكاء="١-٢٦٨"
     هارون="١-١٩٤"
     يعقوب="١-٢٥٦"
     رقم="٤١">
  <عنوان>
    <مقطع هوية='٨٩٥٩١' رقم="١">هٰذَا بَاْبُ الصِّفَةِ الْمُشَبَّهَةِ بِالْفَاْعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  </عنوان>
  <مقطع هوية='٢١٤٨٥' رقم="٢">وَلَمْ تَقْوَ أَنْ تَعْمَلَ عَمَلَ الْفَاْعِلِ</مقطع>
  <مقطع هوية='٠٢٦٤٠' رقم="٣">لِأَنَّهَا لَيْسَتْ في مَعْنَى الْفِعْلِ الْمُضَاْرِعِ</مقطع>
  <مقطع هوية='٩٣٩١٤' رقم="٤">فَإِنَّمَا شُبِّهَتْ بِالْفَاْعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  <مقطع هوية='٥٩٥٧٠' رقم="٥">وَمَا تَعْمَلُ فِيْهِ مَعْلُوْمٌ</مقطع>
  <مقطع هوية='٥١٠٦٥' رقم="٦">إِنَّمَا تَعْمَلُ فِيْمَا كَاْنَ مِنْ سَبَبِهَا</مقطع>
  <مقطع هوية='٤٢٨٩٦' رقم="٧">مُعَرَّفًا بِالْأَلِفِ وَاللَّامِ أَوْ نَكِرَةً</مقطع>
  <مقطع هوية='٠٠٦١٨' رقم="٨">لَا تُجَاوِزُ هٰذَا</مقطع>
  <مقطع هوية='٠٤٧٦٤' رقم="٩">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا اسْمٍ هُوَ في مَعْنَاْهُ</مقطع>
  <رأس هوية="١٩٠٧٠">
    <عنوان>الإضافة في الصِّفة المُشَبَّهَة</عنوان>
  </رأس>
  <مقطع هوية='٩٦٦٠٢' رقم="١٠">وَالْإِضَاْفَةُ فِيْهِ أَحَْسَنُ وَأَكْثَرُ</مقطع>
  <مقطع هوية='٣٥٨٤٨' رقم="١١">لِأَنَّهُ لَيْسَ كَمَا جَرَى مَجْرَى الْفِعْلِ وَلَا في مَعْنَاْهُ</مقطع>
  <مقطع هوية='٧٩٦٧٨' رقم="١٢">فَكَانَ أَحْسَنَ عِنْدَهُمْ أَنْ يَتَبَاْعَدَ مِنْهُ في اللَّفْظِ</مقطع>
  <مقطع هوية='٣٥٩٤٢' رقم="١٣">كَمَا أَنَّهُ لَيْسَ مِثْلَهُ في الْمَعْنَى وَفِي قُوَّتِهِ في الْأَشْيَاْءِ</مقطع>
  <مقطع هوية='٨٧٩٤٢' رقم="١٤">وَالتَّنْوِيْنُ عَرَبِىٌّ جَيِّدٌ</مقطع>
  <مقطع هوية='٩٣٥٢٢' رقم="١٥">وَمَعَ هٰذَا أَنَّهُمْ لَوْ تَرَكُوا التَّنْوِينَ أَوِ النُّوْنَ</مقطع>
  <مقطع هوية='٠٥٧٣٠' رقم="١٦">لَمْ يَكُنْ أَبَدًا إِلَّا نَكِرَةً عَلَى حَاْلِهِ مِنَوَّنًا</مقطع>
  <مقطع هوية='٩٣٤٦٥' رقم="١٧">فَلَمَّا كَانَ تَرْكُ التَّنْوِيْنِ فِيْهِ وَالْنُّوْنُ</مقطع>
  <مقطع هوية='٣٥٢٤٥' رقم="١٨">لَا يُجَاوَزُ بِهِ مَعْنَى النُّوْنِ وَالتَّنْوْيِنِ</مقطع>
  <مقطع هوية='٤٦٠٤٨' رقم="١٩">كَانَ تَرْكُهُمَا أَخَفَّ عَلَيْهِمْ</مقطع>
  <مقطع هوية='٧٤٣٣٦' رقم="٢٠">فَهٰذَا يُقَوِّي أَنَّ الْإِضَاْفَةَ أَحْسَنُ مَعَ التَّفْسِيْرِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٧٢٩٣١' رقم="٢١">فَالْمُضَاْفُ قَوْلُكَ <قول هوية='٩٨٧٨٩' رقم="١" مثال="١">هٰذَا حَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع هوية='٢٧٧٠٦' رقم="٢٢">وَ<قول هوية='١٥٠٩٧' رقم="٢" مثال="١">هَذِهِ حَسَنَةُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع هوية='٧٧٠٩٧' رقم="٢٣">فَالصِّفَةُ تَقَعُ عَلَى الِاسْمِ الْأَوَّلِ</مقطع>
  <مقطع هوية='٩١٣٢٨' رقم="٢٤">ثُمَّ تُوْصِلُهُا إِلَى <حرف>الْوَجْهِ</حرف>
  </مقطع>
  <مقطع هوية='٤٩٣٧١' رقم="٢٥">وَإِلَى كُلِّ شَيءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع هوية='٨١٩٥٧' رقم="٢٦">عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='١٧٩٧٣' رقم="٢٧">كَمَا تَقُوْلُ <قول هوية='٢٧١٩١' رقم="٣" مثال="١">هٰذَا ضَارِبُ الرَّجُلِ</قول></مقطع>
  <مقطع هوية='٩٨٢٥٤' رقم="٢٩">وَ<قول هوية='٧٤٠٣١' رقم="٤" مثال="١">هَذِهِ ضَارِبَةُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع هوية='٥٨٣٤٧' رقم="٣٠">إِلَّا أَنَّ الْحُسْنَ في الْمَعْنَى لِلْوَجْهِ</مقطع>
  <مقطع هوية='٢١٥٢٧' رقم="٣١">وَالضَّرْبُ هٰهُنَا لِلْأَوَّلِ</مقطع>
  <مقطع هوية='٨٩١٨٥' رقم="٣٢">وَمِنْ ذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع هوية='٣٣٧٢٤' رقم="٣٣">
    <قول هوية='٠٨٩٩٨' رقم="٥" مثال="١">هُوَ أَحْمَرُ بَيْنِ الْعَيْنَيْنِ</قول>
  </مقطع>
  <مقطع هوية='٨٧٤٢٥' رقم="٣٤">وَ<قول هوية='٢٠٥٨٨' رقم="٦" مثال="١">هُوَ جَيِّدُ وَجْهِ الدَّاْرِ</قول>
  </مقطع>
  <مقطع هوية='١٣٣١١' رقم="٣٥">وَمِمَّا جَاْءَ مُنَوَّنًا قَوْلُ <شاعر>زُهَيْرٍ</شاعر>
  </مقطع>
  <شاهدة هوية='٠٩٣٥٧' مقطع="٣٦" رقم="١">
    <بيت>
      <مصراع>أَهْوَى لَهَا أَسْفَعُ الْخَدَّيْنِ <ثبات>مُطَّرِقٌ</ثبات>
      </مصراع>
      <مصراع>
      <ثبات>رِيْشَ</ثبات> الْقَوَادِمِ لَمْ تُنْصَبْ لَهُ الشَّبَكُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٥٦٤٦' رقم="٣٧">وَقَاْلَ <شاعر>الْعَجَّاْجُ</شاعر>
  </مقطع>
  <شاهدة هوية='٣٦٩٢٥' مقطع="٣٨" رقم="٢">
    <بيت>
      <مصراع>مُحْتَبِكٌ <ثبات>ضَخْمٌ شُئُوْنَ</ثبات> الرَّأْسِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٠٣٧٢' رقم="٣٩">وَقَالَ أَيْضًا <شاعر>النَّابِغَةُ</شاعر>
  </مقطع>
  <شاهدة هوية='٠٥٥٢٧' مقطع="٤٠" رقم="٣">
    <بيت>
      <مصراع>وَنَأْخُذْ بَعْدَهُ بِذِنَاْبِ عَيْشٍ</مصراع>
      <مصراع>
      <ثبات>أَجَبَّ الظَّهْرَ</ثبات> لَيْسَ لَهُ سَنَاْمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٧٦٨٢' رقم="٤١">وَهُوَ في الشِّعْرِ كَثِيْرٌ</مقطع>
  <مقطع هوية='٧٦١٢٧' رقم="٤٢">وَاعْلَمْ أَنَّ كَيْنُوْنَةَ الْأَلِفِ وَاللَّامِ في الِاسْمِ الْآخِرِ</مقطع>
  <مقطع هوية='٥٧٩٢٦' رقم="٤٣">أَكْثَرُ وَأَحْسَنُ مِنْ أَنْ لَا تَكُوْنَ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع هوية='٤٧٨٦٥' رقم="٤٤">لِأَنَّ الْأَوَّلَ في الْأَلِفِ وَاللَّامِ وَفي غَيْرِهِمَا هٰهُنَا عَلَى حَالَةٍ وَاحِدَةٍ</مقطع>
  <مقطع هوية='٨٤٨٥٦' رقم="٤٥">وَلَيْسَ كَالْفَاعِلِ</مقطع>
  <مقطع هوية='٤٧٣٨٠' رقم="٤٦">فَكَانَ إِدْخَالُهُمَا أَحْسَنَ وَأَكْثَرَ</مقطع>
  <مقطع هوية='٦٧٧٣٧' رقم="٤٧">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ أَكْثَرَ</مقطع>
  <مقطع هوية='٩٨٤٩٧' رقم="٤٨">وَكَانَ الْأَلِفُ وَاللَّامُ أَوْلَى</مقطع>
  <مقطع هوية='٦٠٠٨٦' رقم="٤٩">لِأَنَّ مَعْنَاهُ <حرف>حَسَنٌ وَجْهُهُ</حرف>
  </مقطع>
  <مقطع هوية='٣٣٧٤٤' رقم="٥٠">فَكَمَا لَا يَكُوْنُ <حرف>هٰذَا</حرف> إِلَّا مَعْرِفَةً</مقطع>
  <مقطع هوية='٩٣٧٠٦' رقم="٥١">اِخْتَارُوْا في ذٰلِكَ الْمَعْرِفَةَ</مقطع>
  <مقطع هوية='٧٠١٣٧' رقم="٥٢">وَالْأُخْرَى عَرَبِيَّةٌ</مقطع>
  <مقطع هوية='٦٩٤٧٤' رقم="٥٣">كَمَا أَنَّ التَّنْوِينَ وَالنُّوْنَ عَرَبِىٌّ مُطَّرِدٌ</مقطع>
  <مقطع هوية='٤٦٥١٣' رقم="٥٤">فَمِنْ ذٰلِكَ قَوْلُهُ <قول هوية='٧٧٨٨٨' رقم="٧" مثال="١">هُوَ حَدِيْثُ عَهْدٍ بِالْوَجَعِ</قول>
  </مقطع>
  <مقطع هوية='٠٩٥٦٤' رقم="٥٥">وَقَاْلَ عَمْرُو بْنُ شَأْسٍ</مقطع>
  <شاهدة هوية='٧٩٥٤٩' مقطع="٥٦" رقم="٤">
    <بيت>
      <مصراع>أَلِكْنِي إِلَى قَوْمِي السَّلامَ رِسَاْلَةً</مصراع>
      <مصراع>بِآيَةِ مَا كَاْنُوْا ضِعَاْفًا وَلَا عُزْلَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَلَا سَيِّئِي زِيٍّ إِذَا مَا تَلَبَّسُوْا</مصراع>
      <مصراع>إِلَى حَاْجَةٍ يَوْمًا مُخَيَّسَةً بُزْلَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٤٦٩٠' رقم="٥٧">وَقَالَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة هوية='٢٧٥١٤' مقطع="٥٨" رقم="٥">
    <بيت>
      <مصراع>لَاحِقُ بَطْنِ بِقَرًا سَمِيْنِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩١٢١٢' رقم="٥٩">وَمِمَّا جَاءَ مُنَوَّنًا قَوْلُ <شاعر>أَبِي زُبَيْدٍ</شاعر> يَصِفُ الْأَسَدَ</مقطع>
  <شاهدة هوية='١١١٧٤' مقطع="٦٠" رقم="٦">
    <بيت>
      <مصراع>كَأَنَّ أَثْوَاْبَ نَقّاْدٍ قُدِرْنَ لَهُ</مصراع>
      <مصراع>يَعْلُو بِخَمْلَتِها <ثبات>كَهْبَاءَ هُدَّابَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٥٠٥٢٠' رقم="٦١">وَقَالَ أَيْضًا</مقطع>
  <شاهدة هوية='٣٥٠٧٣' مقطع="٦٢" رقم="٧">
    <بيت>
      <مصراع>هَيْفَاءُ مُقْبِلَةً عَجْزَاءُ مُدْبِرَةً</مصراع>
      <مصراع>مَحْطُوْطَةٌ جُدِلَتْ <ثبات>شَنْبَاءُ أَنْيَابَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٣٥٩٦' رقم="٦٣">وَقَالَ عَدِيُّ بْنُ زَيْدٍ</مقطع>
  <شاهدة هوية='٩٣٣٣٢' مقطع="٦٤" رقم="٨">
    <بيت>
      <مصراع>مِنْ حَبِيْبٍ أَوْ أَخِي ثِقَةٍ</مصراع>
      <مصراع>أَوْ عَدُوٍّ <ثبات>شَاْحِطٍ دَاْرَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٤١١٥٥' رقم="٦٥">وَقَدْ جَاْءَ في الشِّعْرِ <حرف>حَسَنَةُ وَجْهِهَا</حرف>
  </مقطع>
  <مقطع هوية='٨٥٦٦٣' رقم="٦٦">شَبَّهُوْهُ بِـ<حرف>حَسَنَةِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع هوية='٤٨٧٨٣' رقم="٦٧">وَذٰلِكَ رَدِيْءٌ</مقطع>
  <قائمة>
    <وحدة>
      <مقطع هوية='٨٧٦٥٦' رقم="٦٨">لِأَنَّهُ بِالْهَاءِ مَعْرِفَةٌ كَمَا كَانَ بِالْأَلِفِ وَاللَّامِ</مقطع>
    </وحدة>
    <وحدة>
      <مقطع هوية='٢٧١١٦' رقم="٦٩">وَهُوَ مِنْ سَبَبِ الْأَوَّلِ كَمَا أَنَّهُ مِن سَبَبِهِ بِالْأَلِفِ وَاللَّامِ</مقطع>
    </وحدة>
  </قائمة>
  <مقطع هوية='٤٩٩٥١' رقم="٧٠">قَالَ الشَّمَّاْخُ</مقطع>
  <شاهدة هوية='٥٦٥٣٤' مقطع="٧١" رقم="٩">
    <بيت>
      <مصراع>أَمِنْ دِمْنَتَيْنِ عَرَّسَ الرَّكْبُ فِيْهِمَا</مصراع>
      <مصراع>بِحَقْلِ الرُّخَاْمَى قَدْ عَفَا طَلَلَاهُمَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>أَقَاْمَتْ عَلَى رَبْعَيْهِمَا <ثبات>جَارَتَا صَفًا</ثبات>
      </مصراع>
      <مصراع>كُمَيْتَا الْأَعَاْلِي <ثبات>جَوْنَتَا مُصْطَلَاهُمَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <رأس هوية="٦٦٤٢٠">
    <عنوان>دُخُولُ الأَلِفِ وَالَّامِ في الْمُضَاْفِ</عنوان>
  </رأس>
  <مقطع هوية='٢٦٤١٨' رقم="٧٢">وَاعْلَمْ أَنَّهُ لَيْسَ في الْعَرَبِيَّةِ</مقطع>
  <مقطع هوية='٣٤٥٨٨' رقم="٧٣">مُضَاْفٌ يَدْخُلُ عَلَيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع هوية='٧٠٧٩٩' رقم="٧٤">غَيْرُ الْمُضَاْفِ إِلَى الْمَعْرِفَةِ في هٰذَا الْبَاْبِ</مقطع>
  <مقطع هوية='٨٤٧٥٤' رقم="٧٥">وَذٰلِكَ قَوْلُكَ <قول هوية='٥١٣٤٦' رقم="٨" مثال="١">هٰذَا الْحَسَنُ الْوَجْهِ</قول></مقطع>
  <مقطع هوية='٩٠٩٨٤' رقم="٧٧">أَدْخَلُوْا الْأَلِفَ وَاللَّامَ عَلَى <حرف>حَسَنِ الْوَجْهِ</حرف></مقطع>
  <مقطع هوية='٧٣٤٦٨' رقم="٧٨">لِأَنَّهُ مُضَاْفٌ إِلَى مَعْرِفَةٍ لَا يُكُوْنُ بِهَا مَعْرِفَةً أَبَدًا</مقطع>
  <مقطع هوية='٦١٧٦٥' رقم="٨٠">فَاحْتَاْجَ إِلَى ذٰلِكَ حَيْثُ مُنِعَ مَا يَكُوْنُ في مِثْلِهِ الْبَتَّةَ</مقطع>
  <مقطع هوية='٩٠٤٠٢' رقم="٨٢">وَلَا يُجَاوَزُ بِهِ مَعْنَى التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٠٥٩٠٥' رقم="٨٣">فَأَمَّا النَّكِرَةُ فَلَا يَكُوْنُ فِيْهَا إِلَّا <حرف>الْحَسَنُ وَجْهًا</حرف></مقطع>
  <مقطع هوية='٢٥٠٦٩' رقم="٨٤">تَكُوْنُ الْأَلِفُ وَاللَّامُ بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
  <مقطع هوية='٥٨٥٧٥' رقم="٨٥">لِأَنَّكَ لَوْ قُلْتَ <حرف>حَدِيْثُ عَهْدٍ</حرف> أَوْ <حرف>كَرِيْمُ أَبٍ</حرف></مقطع>
  <مقطع هوية='٢٦٨٥١' رقم="٨٦">لَمْ تُخْلِلْ بِالْأَوَّلِ في شَيءٍ</مقطع>
  <مقطع هوية='٦٩٥٥٢' رقم="٨٧">فَتُحْتَمَلَ لَهُ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع هوية='٢١٢٨٠' رقم="٨٨">لِأَنَّهُ عَلَى مَا يَنْبَغِي أَنْ يَكُوْنَ عَلَيْهِ</مقطع>
  <مقطع هوية='٨٩٦٢٤' رقم="٨٩">قَالَ رُؤْبَةُ</مقطع>
  <شاهدة هوية='٥٢٢١٧' مقطع="٩٠" رقم="١٠">
    <بيت>
      <مصراع>
        <ثبات>الْحَزْنُ بَاْبًا</ثبات> وَ<ثبات>الْعَقُوْرُ كَلْبًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٩١٧١' رقم="٩١">وَزَعَمَ أَبُوْ الْخَطَّاْبِ أَنَّهُ سَمِعَ قَوْمًا مِنْ الْعَرَبِ يُنْشِدُوْنَ هٰذَا الْبَيْتَ لِـ<شاعر>ـلْحَارِثِ ابْنِ ظَالِمٍ</شاعر>
  </مقطع>
  <شاهدة هوية='٧٣٨٧٣' مقطع="٩٢" رقم="١١">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الشُّعْرَى رِقَاْبَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='١٤٣٩٥' رقم="٩٣">فَإِنَّمَا أُدْخِلَتْ الْأَلِفُ وَاللَّامُ في الْـ<حرف>حَسَنِ</حرف>
  </مقطع>
  <مقطع هوية='٥٠٦٨٣' رقم="٩٤">ثُمَّ أَعْمَلْتَهُ</مقطع>
  <مقطع هوية='٨٦١٧٤' رقم="٩٥">كَمَا قَاْلَ <قول هوية='٦١٧٣٣' رقم="٩">الضَّاْرِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٦٧٨٠٥' رقم="٩٦">وَعَلَىَ هٰذَا الْوَجْهِ تَقُوْلُ <قول هوية='٣٦٤٠٥' رقم="١٠" مثال="١">هُوَ الْحَسَنُ الْوَجْهَ</قول>
  </مقطع>
  <مقطع هوية='٥١٢٦٠' رقم="٩٧">وَهِىَ عَرَبِيَّةٌ جَيِّدَةٌ</مقطع>
  <مقطع هوية='٣٩١٥٥' رقم="٩٨">قَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة هوية='٣٣٤٢٢' مقطع="٩٩" رقم="١٢">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الشُّعْرِ الرِّقَابَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٨٨٥' رقم="١٠٠">وَقَدْ يَجُوْزُ في هٰذَا</مقطع>
  <مقطع هوية='٣٦٩٦٦' رقم="١٠١">أَنْ تَقُوْلَ <قول هوية='٦٧٢٣٩' رقم="١١" مثال="١">هُوَ الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع هوية='٥٣٣٦٩' رقم="١٠٢">عَلَى قَوْلِهِ <قول هوية='١١٣١٨' رقم="١٢">هُوَ الضَّارِبُ الرَّجُلِ</قول></مقطع>
  <مقطع هوية='٣٤٧٧٨' رقم="١٠٣">فَالْجَّرُ في هٰذَا الْبَاْبِ مِنْ وَجْهَيْنِ</مقطع>
  <مقطع هوية='١٥٠٥٦' رقم="١٠٤">مِنَ البَاْبِ الَّذِي هُوَ لَهُ وَهُوَ الْإِضَاْفَةُ</مقطع>
  <مقطع هوية='٢٣٩٨٠' رقم="١٠٥">وَمِنْ إِعْمَاْلِ الْفِعْلِ ثُمَّ يُسْتَخَفُّ فَيُضَاْفُ</مقطع>
  <مقطع هوية='٠٤٥٠٣' رقم="١٠٦">فَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ فَأَثْبَتَّ النُّوْنَ فَلَيْسَ إِلَّا النَّصْبُ</مقطع>
  <مقطع هوية='٠١٧٦٩' رقم="١٠٧">وَذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع هوية='١١٩٣٣' رقم="١٠٨">
    <قول هوية='٤١٥٦١' رقم="١٣" مثال="١">هُمُ الطَّيِّبُوْنَ الْأَخْبَاْرَ</قول>
  </مقطع>
  <مقطع هوية='٢٧٢٨٠' رقم="١٠٩">وَ<قول هوية='٦٦٥٢٤' رقم="١٤" مثال="١">هُمَا الْحَسَنَاْنِ الْوُجُوْهَ</قول>
  </مقطع>
  <مقطع هوية='٦٠٣٤٦' رقم="١١٠">وَمِنْ ذٰلِكَ قَوْلُهُ تَعَاْلَى</مقطع>
  <مقطع هوية='٣٣٥٤٥' رقم="١١١">
    <آية هوية='٨٤١٥٠' سورة="١٨" آية="١٠٣">قُلْ هَلْ نُنَبِّئُكُمْ بِالْأَخْسَرِيْنَ أَعْمَاْلًا</آية>
  </مقطع>
  <مقطع هوية='٤٠٧١٧' رقم="١١٢">وَقَاْلَتْ خِرْنِقُ مِنْ بَنِي قَيْسٍ</مقطع>
  <شاهدة هوية='١٦٧٠٠' مقطع="١١٣" رقم="١٣">
    <بيت>
      <مصراع>لَا يَبْعَدَنْ قَوْمِي الَّذِيْنَ هُمُ</مصراع>
      <مصراع>سَمُّ الْعُدَاْةِ وَآفَةُ الْجُزْرِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>النَّاْزِلُوْنَ بِكُلِّ مُعْتَرَكٍ</مصراع>
      <مصراع>وَ<ثبات>الطَّيِّبُوْنَ مَعَاْقِدَ الْأَزْرِ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٠٠٣٠' رقم="١١٤">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
  <مقطع هوية='١٣٢٧٧' رقم="١١٥">كَاْنَ الْمَعْمُوْلُ فِيْهِ نَكِرَةً أَوْ فِيْهِ أَلِفٌ وَلَامٌ</مقطع>
  <مقطع هوية='٩٥٨١٤' رقم="١١٦">كَمَا قُلْتَ <قول هوية='٠٦٤٠٢' رقم="١٥" مثال="١">هَؤُلَاءِ الضَارْبُو زَيْدٍ</قول>
  </مقطع>
  <مقطع هوية='١٢٢٩٨' رقم="١١٧">وَذٰلِكَ قَوْلُهُمْ <قول هوية='٩٢٨٨٥' رقم="١٦" مثال="١">هُمُ الطَّيِّبُو أَخْبَاْرٍ</قول>
  </مقطع>
  <مقطع هوية='٣٢٩٥١' رقم="١١٨">وَإِنْ شِئْتَ نَصَبْتَ عَلَى قَوْلِهِ</مقطع>
  <شاهدة هوية='٣٠٦٤٨' مقطع="١١٩" رقم="١٤">
    <بيت>
      <مصراع>
      <ثبات>الْحَاْفِظُو عَوْرَةَ</ثبات> الْعَشِيرَةِ</مصراع>
    </بيت>
  </شاهدة>
  <رأس هوية="٥١٤٥٤">
    <عنوان>الْفَصْلُ وَإثْباتُ التَّنْوِيْنِ</عنوان>
  </رأس>
  <مقطع هوية='٩٢٦٥٦' رقم="١٢٠">وَتَقُوْلُ فِيْمَا لَا يَقَعُ إِلَّا مُنَوَّنًا عَامِلًا في نَكِرَةٍ</مقطع>
  <مقطع هوية='٠٠٩٧٦' رقم="١٢١">وَإِنَّمَا وَقَعَ مُنَوَّنًا لِأَنَّهُ فُصِلَ فِيْهِ بَيْنَ الْعَامِلِ وَالْمَعْمُوْلِ</مقطع>
  <مقطع هوية='٦٣٢٢٧' رقم="١٢٢">فَالْفَصْلُ لَازِمٌ لَهُ أَبَدًا مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع هوية='٣٧٢٩٥' رقم="١٢٣">وَذٰلِكَ قَوْلُكَ <قول هوية='٥٣٢٧٥' رقم="١٧" مثال="١">هُوَ خَيْرٌ مِنْكَ أَبًا</قول>
  </مقطع>
  <مقطع هوية='٣٧٧٥٤' رقم="١٢٤">وَ<قول هوية='٧٠٦١٠' رقم="١٨" مثال="١">هُوَ أَحْسَنُ مِنْكَ وَجْهًا</قول>
  </مقطع>
  <مقطع هوية='٤٥٢٤٨' رقم="١٢٥">وَلَا يَكُوْنُ الْمَعْمُوْلُ فِيْهِ إِلَّا مِنْ سَبَبِهِ</مقطع>
  <مقطع هوية='٩٤٩١٩' رقم="١٢٦">وَإِنْ شِئْتَ قُلْتَ <قول هوية='٤٣٨٨٥' رقم="١٩" مثال="١">هُوَ خَيْرٌ عَمَلًا</قول>
  </مقطع>
  <مقطع هوية='٧٩٨٢٩' رقم="١٢٧">وَأَنْتَ تَنْوِي <حرف>مِنْكَ</حرف>
  </مقطع>
  <مقطع هوية='٥٧٣٢٥' رقم="١٢٨">وَإِنْ شِئْتَ أَخَّرْتَ الْفَصْلَ في اللَّفْظِ وَأَصْلُهُ التَّقْدِيْمُ</مقطع>
  <مقطع هوية='٤٨٦٩٢' رقم="١٢٩">لِأَنَّهُ لَا يَمْنَعُهُ تَأْخِيْرُهُ عَمَلَهُ مُقَدَّمًا</مقطع>
  <مقطع هوية='٣٦٣٨٥' رقم="١٣٠">كَمَا قَالَ <قول هوية='٢١٨٩٠' رقم="٢٠">ضَرَبَ زَيْدًا عَمْرٌو</قول>
  </مقطع>
  <مقطع هوية='٩٠٨٣٣' رقم="١٣١">فَـ<حرف>عَمْرٌو</حرف> مُؤَخَّرٌ فِي اللَّفْظِ مَبْدُوْءٌ بِهِ في الْمَعْنَى</مقطع>
  <مقطع هوية='٩١٨١٦' رقم="١٣٢">وَهٰذَا مَبْدُوْءٌ بِهِ</مقطع>
  <مقطع هوية='٦٣٥٧٤' رقم="١٣٣">في أَنَّهُ يُثْبِتُ التَّنْوِيْنَ ثُمَّ يُعْمِلُ</مقطع>
  <مقطع هوية='٧٨٦٨١' رقم="١٣٤">وَلَا يَعْمَلُ إِلَّا في نَكِرَةٍ كَمَا أَنَّهُ لَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع هوية='٧٦٦٢٥' رقم="١٣٥">وَلَا يَقْوَى قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع هوية='٥٦٦٧٣' رقم="١٣٦">فَأَلْزَمَ فِيْهِ وَفِيْمَا يَعْمَلُ فِيْهِ وَجَهًا وَاْحِدًا</مقطع>
  <مقطع هوية='٨٠٩٢١' رقم="١٣٧">وَيَعْمَلُ في الْجَمْعِ كَقَوْلِهِمْ</مقطع>
  <مقطع هوية='٦٧٣٤٧' رقم="١٣٨">
    <قول هوية='٥٩٨٩٠' رقم="٢١" مثال="١">هُوَ خَيْرٌ مِنْكَ أَعْمَاْلًا</قول>
  </مقطع>
  <مقطع هوية='٤٤٥٩٦' رقم="١٣٩">فَإِنْ أَضَفْتَ فَقُلْتَ <قول هوية='٦٥٢٤٦' رقم="٢٢" مثال="١">هٰذَا أَوَّلُ رَجُلٍ</قول>
  </مقطع>
  <مقطع هوية='٤٩٦٤١' رقم="١٤٠">اجْتَمَعَ فِيْهِ لُزُوْمُ النَّكِرَةِ</مقطع>
  <مقطع هوية='٢٩٦١٤' رقم="١٤١">وَأَنْ يُلْفَظَ بِوَاْحِدٍ وَهُوَ يُرِيْدُ الْجَمْعَ</مقطع>
  <مقطع هوية='٣٨٥٦٩' رقم="١٤٢">وَذٰلِكَ لِأِنَّهُ أَرَاْدَ أَنْ يَقُوْلَ <قول هوية='٨٤٤٩٢' رقم="٢٣">
  <تقدير>هٰذا</تقدير> أَوَّلُ الرِّجَاْلِ</قول>
  </مقطع>
  <مقطع هوية='٩٩٩٦٢' رقم="١٤٣">فَحَذَفَ اسْتِخْفَاْفًا وَاخْتِصَاْرًا</مقطع>
  <مقطع هوية='٠١٠٠٦' رقم="١٤٤">كَمَا قَاْلُوْا <حرف>كُلُّ رَجُلٍ</حرف> يُرِيْدُوْنَ <حرف>كُلُّ الرِّجَاْلِ</حرف>
  </مقطع>
  <مقطع هوية='٢٦٩٥٠' رقم="١٤٥">فَكَمَا اسْتَخَفُّوْا بِحَذْفِ الْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع هوية='٧١٨٨٧' رقم="١٤٦">اسْتَخَفُّوْا بِتَرْكِ بِنَاْءِ الْجَمِيْعِ</مقطع>
  <مقطع هوية='٤٠٠٨٦' رقم="١٤٧">وَاسْتَغْنَوْا عَنْ الْأَلْفِ وَاللَّامِ</مقطع>
  <مقطع هوية='٩٢٦٦٤' رقم="١٤٨">وَعَنْ قَوْلِهِمْ <قول هوية='٥٢٨٢٦' رقم="٢٤">خَيْرُ الرِّجَاْلِ</قول> وَ<قول هوية='٦٦٥٠٥' رقم="٢٥">أَوَّلُ الرِّجَاْلِ</قول>
