  <مقطع هوية='٦١٣٠٠' رقم="٢٠٨">فَالْمَجْرُوْرُ هُنَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع هوية='١٠٥٩٠' رقم="٢٠٩">وَانْتَصَبَ الـ<حرف>رَّجُلُ</حرف> وَالِـ<حرف>اثْنَاْنِ</حرف>
  </مقطع>
  <مقطع هوية='٦٥٩٥٠' رقم="٢١٠">كَمَا انْتَصَبَ <حرف>الْوَجْهُ</حرف> في قَوْلِكَ</مقطع>
  <مقطع هوية='٠٣٤٤١' رقم="٢١١">
    <قول هوية='٠١٧٧٦' رقم="٤٢" مثال="١">هُوَ أَحْسَنُ مِنْهُ وَجْهًا</قول>
