<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٩"
     درنبورج="١-٨١"
     البكاء="١-٢٦٨"
     هارون="١-١٩٤"
     يعقوب="١-٢٥٦"
     رقم="٤١">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الصِّفَةِ الْمُشَبَّهَةِ بِالْفَاْعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَلَمْ تَقْوَ أَنْ تَعْمَلَ عَمَلَ الْفَاعِلِ</مقطع>
  <مقطع رقم="٣">لِأَنَّهَا لَيْسَتْ في مَعْنَى الْفِعْلِ الْمُضَارِعِ</مقطع>
  <مقطع رقم="٤">فَإِنَّمَا شُبِّهَتْ بِالْفَاعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  <مقطع رقم="٥">وَمَا تَعْمَلُ فِيْهِ مَعْلُوْمٌ</مقطع>
  <مقطع رقم="٦">إِنَّمَا تَعْمَلُ فِيْمَا كَانَ مِنْ سَبَبِهًا</مقطع>
  <مقطع رقم="٧">مُعَرَّفًا بِالْأَلِفِ وَاللَّامِ أَوْ نَكِرَةً</مقطع>
  <مقطع رقم="٩">لَا تُجَاوِزُ هٰذًا</مقطع>
  <مقطع رقم="١٠">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا اسْمٍ هُوَ في مَعْنَاهُ</مقطع>
  <مقطع رقم="١٢">وَالْإِضَافَةُ فِيْهِ أَحْسَنُ وَأَكْثَرُ</مقطع>
  <مقطع رقم="١٣">لِأَنَّهُ لَيْسَ كَمَا جَرَى مَجْرَى الْفِعْلِ وَلَا في مَعْنَاهُ</مقطع>
  <مقطع رقم="١٥">فَكَانَ أَحْسَنَ عِنْدَهُمْ أَنْ يَتَبَاعَدَ مِنْهُ في اللَّفْظِ</مقطع>
  <مقطع رقم="١٧">كَمَا أَنَّهُ لَيْسَ مِثْلَهُ في الْمَعْنَى وَفِي قُوَّتِهِ في الْأَشْيَاءِ</مقطع>
  <مقطع رقم="١٩">وَالتَّنْوِيْنُ عَرَبِىٌّ جَيِّدٌ</مقطع>
  <مقطع رقم="٢٠">وَمَعَ هٰذَا أَنَّهُمْ لَوْ تَرَكُوا التَّنْوِينَ أَوِ النُّوْنَ</مقطع>
  <مقطع رقم="٢٢">لَمْ يَكُنْ أَبَدًا إِلَّا نَكِرَةً عَلَى حَالِهِ مِنَوَّنًا</مقطع>
  <مقطع رقم="٢٤">فَلَمَّا كَانَ تَرْكُ التَّنْوِيْنِ فِيْهِ وَالْنُّوْنُ</مقطع>
  <مقطع رقم="٢٥">لَا يُجَاوَزُ بِهِ مَعْنَى النُّوْنِ وَالتَّنْوْيِنِ</مقطع>
  <مقطع رقم="٢٦">كَانَ تَرْكُهُمَا أَخَفَّ عَلَيْهِمْ</مقطع>
  <مقطع رقم="٢٧">فَهٰذَا يُقَوِّى أَنَّ الْإِضَافَةَ أَحْسَنُ مَعَ التَّفْسِيْرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٩">فَالْمُضَافُ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٠">
    <قول رقم="١">هٰذَا حَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٣١">وَ<قول رقم="٢">هَذِهِ حَسَنَةُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٣٢">فَالصِّفَةُ تَقَعُ عَلَى الِاسْمِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٣٣">ثُمَّ تُوْصِلُهُا إِلَى <حرف>الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٣٤">وَإِلَى كُلِّ شَيءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="٣٥">عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٣٦">كَمَا تَقُوْلُ</مقطع>
  <مقطع رقم="٣٧">
    <قول رقم="٣">هٰذَا ضَارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣٨">وَ<قول رقم="٤">هَذِهِ ضَارِبَةُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣٩">إِلَّا أَنَّ الْحُسْنَ في الْمَعْنَى لِلْوَجْهِ</مقطع>
  <مقطع رقم="٤٠">وَالضَّرْبُ هٰهُنَا لِلْأَوَّلِ</مقطع>
  <مقطع رقم="٤١">وَمِنْ ذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="٤٢">
    <قول رقم="٥">هُوَ أَحْمَرُ بَيْنِ الْعَيْنَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٤٣">وَ<قول رقم="٦">هُوَ جَيِّدُ وَجْهِ الْدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٤٤">وَمِمَّا جَاءَ مُنَّوْنًا قَوْلُ <شاعر>زُهَيْرٍ</شاعر>
  </مقطع>
  <شاهدة رقم="١" xml:id="٤١-١">
    <بيت>
      <مصراع>أَهْوَى لَهَا أَسْفَعُ الْخَدَّيْنِ <ثبات>مُطَّرِقٌ</ثبات></مصراع>
      <مصراع><ثبات>رِيْشَ</ثبات> الْقَوَادِمِ لَمْ تُنْصَبْ لَهُ الْشَّبَكُ</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="١٩٥"/>
  <مقطع رقم="٤٥">وَقَالَ <شاعر>الْعَجَّاجُ</شاعر>
  </مقطع>
  <شاهدة رقم="٢" xml:id="٤١-٢">
    <بيت>
      <مصراع>مُحْتَبِكٌ <ثبات>ضَخْمٌ شُئُوْنَ</ثبات> الْرَّأْسِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٦">وَقَالَ أَيْضًا <شاعر>النَّابِغَةِ</شاعر>
  </مقطع>
  <شاهدة رقم="٣" xml:id="٤١-٣">
    <بيت>
      <مصراع>وَنَأْخُذْ بَعْدَهُ بِذِنَابِ عَيْشٍ</مصراع>
      <مصراع><ثبات>أَجبَّ الظَّهْرَ</ثبات> لَيْسَ لَهُ سَنَامُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٧">وَهُوَ في الشِّعْرِ كَثِيْرٌ</مقطع>

  <مقطع رقم="٤٨">وَاعْلَمْ أَنَّ كَيْنُوْنَةَ الْأَلِفِ وَاللَّامِ في الِاسْمِ الْآخِرِ</مقطع>
  <مقطع رقم="٥٠">أَكْثَرُ وَأَحْسَنُ مِنْ أَنْ لَا تَكُوْنَ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٥٢">لِأَنَّ الْأَوَّلَ في الْأَلِفِ وَاللَّامِ وَفي غَيْرِهِمًا هٰهُنَا عَلَى حَالَةٍ وَاحِدَةٍ</مقطع>
  <مقطع رقم="٥٥">وَلَيْسَ كَالْفَاعِلِ</مقطع>
  <مقطع رقم="٥٦">فَكَانَ إِدْخَالُهُمَا أَحْسَنَ وَأَكْثَرَ</مقطع>
  <مقطع رقم="٥٧">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ أَكْثَرَ</مقطع>
  <مقطع رقم="٥٨">وَكَانَ الْأَلِفُ وَاللَّامُ أَوْلَى</مقطع>
  <مقطع رقم="٥٩">لِأَنَّ مَعْنَاهُ <حرف>حَسَنٌ وَجْهُهُ</حرف>
  </مقطع>
  <مقطع رقم="٦٠">فَكَمَا لَا يَكُوْنُ هٰذَا إِلَّا مَعْرِفَةً</مقطع>
  <مقطع رقم="٦١">اِخْتَارُوْا في ذٰلِكَ الْمَعْرِفَةَ</مقطع>
  <مقطع رقم="٦٢">وَالْأُخْرَى عَرَبِيَّةٌ</مقطع>
  <مقطع رقم="٦٣">كَمَا أَنَّ التَّنْوِينَ وَالنُّوْنَ عَرَبِىٌّ مُطَّرِدٌ</مقطع>
  <مقطع رقم="٦٤">فَمِنْ ذٰلِكَ قَوْلُهُ</مقطع>
  <مقطع رقم="٦٥">
    <قول رقم="٧">هُوَ حَدِيْثُ عَهْدٍ بِالْوَجَعِ</قول>
  </مقطع>
  <مقطع رقم="٦٦">وَقَالَ عَمْرُو بْنُ شَأْسٍ</مقطع>
  <شاهدة رقم="٤" xml:id="٤١-٤">
    <بيت>
      <مصراع>أَلِكْنِي إِلَى قَوْمِي السَّلامَ رِسَالَةً</مصراع>
      <مصراع>بِآيَةِ مَا كَانُوْا ضِعَافًا وَلَا عُزْلا</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَلَا سَيِّئِي زِيٍّ إِذَا مَا تَلَبَّسُوا</مصراع>
      <مصراع>إِلَى حَاجَةٍ يَوْمًا مُخَيَّسَةً بُزْلا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٧">وَقَالَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة رقم="٥" xml:id="٤١-٥">
    <بيت>
      <مصراع>لَاحِقُ بَطْنِ بِقَرًا سَمِيْنِ</مصراع>
    </بيت>
  </شاهدة>

  <مقطع رقم="٦٨">وَمِمَّا جَاءَ مِنَوَّنًا قَوْلُ <شاعر>أَبِي زُبَيْدٍ</شاعر> يَصِفُ الْأَسَدَ</مقطع>
  <شاهدة رقم="٦" xml:id="٤١-٦">
    <بيت>
      <مصراع>كَأَنَّ أَثْوَابَ نَقّادٍ قُدِرْنَ لَهُ</مصراع>
      <مصراع>يَعْلُو بِخَمْلَتِها <ثبات>كَهْبَاءَ هُدَّابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٠">وَقَالَ أَيْضًا</مقطع>
  <شاهدة رقم="٧" xml:id="٤١-٧">
    <بيت>
      <مصراع>هَيْفَاءُ مُقْبِلَةً عَجْزَاءُ مُدْبِرَةً</مصراع>
      <مصراع>مَحْطُوْطَةٌ جُدِلَتْ <ثبات>شَنْبَاءُ أَنْيَابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧١">وَقَالَ عَدِىِّ بْنِ زَيْدِ</مقطع>
  <شاهدة رقم="٨" xml:id="٤١-٨">
    <بيت>
      <مصراع>مِنْ حَبِيْبٍ أَوْ أَخِي ثِقَةٍ</مصراع>
      <مصراع>أَوْ عَدُوٍّ <ثبات>شَاْحِطٍ دَاْرًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>


  <مقطع رقم="٧٢">وَقَدْ جَاءَ في الشِّعْرِ <قول رقم="٨">حَسَنَةُ وَجْهِهَا</قول>
  </مقطع>
  <مقطع رقم="٧٤">شَبَّهُوْهُ بِـ<قول رقم="٩">حَسَنَةِ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٧٥">وَذٰلِكَ رَدِيءٌ لِأَنَّهُ بِالْهَاءِ مَعْرِفَةٌ كَمَا كَانَ بِالْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="٧٨">وَهُوَ مِنْ سَبَبِ الْأَوَّلِ كَمَا أَنَّهُ مِن سَبَبِهِ بِالْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="٨٠">قَالَ الشَّمَّاخِ</مقطع>
  <شاهدة رقم="٩" xml:id="٤١-٩">
    <بيت>
      <مصراع>أَمِنْ دِمْنَتَيْنِ عَرَّسَ الْرَّكْبُ فِيْهِمَا</مصراع>
      <مصراع>بِحَقْلِ الرُّخَامَى قَدْ عَفَا طَلَلاهُما</مصراع>
    </بيت>
    <بيت>
      <مصراع>أَقَامَتْ عَلَى رَبْعَيْهِمَا <ثبات>جَارَتَا صَفّا</ثبات>
      </مصراع>
      <مصراع>كُمَيْتَا الْأَعَالِىَ <ثبات>جَوْنَتَا مُصْطَلاهُمَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>

  <مقطع رقم="٨١">وَاعْلَمْ أَنَّهُ لَيْسَ في الْعَرَبِيَّةِ</مقطع>
  <مقطع رقم="٨٢">مُضَافٌ يَدْخُلُ عَلَيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٨٣">غَيْرُ الْمُضَافِ <هارون مجلد="١" صفحة="١٩٩"/>إِلَى الْمَعْرِفَةِ في هٰذَا الْبَابِ</مقطع>
  <مقطع رقم="٨٤">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٨٥">
    <قول رقم="١٠">هٰذَا الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٨٦">أَدْخَلُوْا الْأَلِفَ وَالْلَّامَ عَلَى <حرف>حَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٨٨">لِأَنَّهُ مُضَافٌ إِلَى مَعْرِفَةٍ</مقطع>
  <مقطع رقم="٨٩">لَا يُكُونُ بِهَا مَعْرِفَةً أَبَدًا</مقطع>
  <مقطع رقم="٩٠">فَاحْتَاجَ إِلَى ذٰلِكَ</مقطع>
  <مقطع رقم="٩١">حَيْثُ مُنِعَ مَا يَكُوْنُ في مِثْلِهِ الْبَتَّةَ</مقطع>
  <مقطع رقم="٩٢">وَلَا يُجَاوَزُ بِهِ مَعْنَى التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٩٣">فَأَمَّا النَّكِرَةُ فَلَا يَكُوْنُ فِيْهَا إِلَّا <حرف>الْحَسَنُ وَجْهًا</حرف>
  </مقطع>
  <مقطع رقم="٩٦">تَكُوْنُ الْأَلِفُ وَاللَّامُ بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٩٨">لِأَنَّكَ لَوْ قُلْتَ <حرف>حَدِيْثُ عَهْدٍ</حرف> أَوْ <حرف>كَرِيْمُ أَبٍ</حرف></مقطع>
  <مقطع رقم="١٠٠">لَمْ تُخْلِلْ بِالْأَوَّلِ في شَيءٍ</مقطع>
  <مقطع رقم="١٠١">فَتَحْتَمِلَ لَهُ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع رقم="١٠٢">لِأَنَّهُ عَلَى مَا يَنْبَغِي أَنْ يَكُوْنَ عَلَيْهِ</مقطع>
  <مقطع رقم="١٠٣">قَالَ رُؤْبَةُ</مقطع>
  <شاهدة رقم="١٠" xml:id="٤١-١٠">
    <بيت>
      <مصراع>
        <ثبات>الْحَزْنُ بَابًا</ثبات> وَ<ثبات>الْعُقُوْرُ كَلْبًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٢٠٠"/>
  <مقطع رقم="١٠٤">وَزَعَمَ أَبُوْ الْخَطَّابِ</مقطع>
  <مقطع رقم="١٠٥">أَنَّهُ سَمِعَ قَوْمًا مِنْ الْعَرَبِ</مقطع>
  <مقطع رقم="١٠٦">يُنْشِدُوْنَ هٰذَا الْبَيْتَ</مقطع>
  <مقطع رقم="١٠٧">لِلْحَارِثِ ابْنِ ظَالِمٍ</مقطع>
  <شاهدة رقم="١١" xml:id="٤١-١١">
    <بيت>
      <مصراع>فَمَا قَوْمِىَ بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الْشُّعْرَى رِقَابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠٨">فَإِنَّمَا أُدْخِلَتْ الْأَلِفُ وَاللَّامُ في الْـ<حرف>حَسَنِ</حرف>
  </مقطع>
  <مقطع رقم="١٠٩">ثُمَّ أَعْمَلْتَهُ</مقطع>
  <مقطع رقم="١١٠">كَمَا قَالَ</مقطع>
  <مقطع رقم="١١١">
    <قول رقم="١٣">الضَّارِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١١٢">وَعَلَىَ هٰذَا الْوَجْهِ تَقُوْلُ</مقطع>
  <مقطع رقم="١١٣">
    <قول رقم="١٤">هُوَ الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="١١٤">وَهِىَ عَرَبِيَّةٌ جَيِّدَةٌ</مقطع>
  <مقطع رقم="١١٥">قَالَ الْشَّاعِرُ</مقطع>
  <شاهدة رقم="١٢" xml:id="٤١-١٢">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الْشُّعْرِ الْرِّقَابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١٦">وَقَدْ يَجُوْزُ في هٰذًا</مقطع>
  <مقطع رقم="١١٧">أَنْ تَقُوْلَ</مقطع>
  <مقطع رقم="١١٨">
    <قول رقم="١٥">هُوَ الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="١١٩">عَلَى قَوْلِهِ</مقطع>
  <مقطع رقم="١٢٠">
    <قول رقم="١٦">هُوَ الضَّارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="١٢١">فَالْجَّرُ في هٰذَا الْبَابِ</مقطع>
  <مقطع رقم="١٢٢">مِنْ وَجْهَيْنِ</مقطع>
  <مقطع رقم="١٢٣">مِنَ البَابِ الَّذِي هُوَ لَهُ</مقطع>
  <مقطع رقم="١٢٤">وَهُوَ الْإِضَافَةُ</مقطع>
  <مقطع رقم="١٢٥">وَمِنْ إِعْمَالِ الْفِعْلِ</مقطع>
  <مقطع رقم="١٢٦">ثُمَّ يُسْتَخَفُّ فَيُضَافُ</مقطع>
  <مقطع رقم="١٢٧">فَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ</مقطع>
  <مقطع رقم="١٢٨">فَأَثْبَتَّ الْنُّوْنَ</مقطع>
  <مقطع رقم="١٢٩">فَلَيْسَ إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="١٣٠">وَذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="١٣١">
    <قول رقم="١٧">هُمُ الطَّيِّبُونَ الْأَخْبَارَ</قول>
  </مقطع>
  <مقطع رقم="١٣٢">
    <قول رقم="١٨">وَهُمَا الْحَسَنَانِ الْوُجُوْهَ</قول>
  </مقطع>
  <مقطع رقم="١٣٣">وَمِنْ ذٰلِكَ قَوْلُهُ تَعَالَى</مقطع>
  <مقطع رقم="١٣٤">
    <آية>قُلْ هَلْ نُنَبَّئُكُمْ بِالْأَخْسَرِينَ أَعْمَالا</آية>
  </مقطع>
  <هارون مجلد="١" صفحة="٢٠١"/>
  <مقطع رقم="١٣٥">وَقَالَتْ خِرْنِقُ مِنْ بَنِىٓ قَيْسٍ</مقطع>
  <شاهدة رقم="١٣" xml:id="٤١-١٣">
    <بيت>
      <مصراع>لَا يَبْعَدَنْ قَوْمِي الَّذِيْنَ هُمُ</مصراع>
      <مصراع>سَمُّ الْعُدَاةِ وَآفَةُ الْجُزْرِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>الْنَّازِلُوْنَ بِكُلّ مُعْتَرَكٍ</مصراع>
      <مصراع>وَ<ثبات>الْطَّيِّبُونَ مَعَاقِدَ الْأَزْرِ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٣٦">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
  <مقطع رقم="١٣٧">كَانَ الْمَعْمُوْلُ فِيْهِ نَكِرَةً</مقطع>
  <مقطع رقم="١٣٨">أَوْ فِيْهِ أَلْفٌ وَلَامٌ</مقطع>
  <مقطع رقم="١٣٩">كَمَا قُلْتَ</مقطع>
  <مقطع رقم="١٤٠">
    <قول رقم="١٩">هَؤُلَاءِ الضَارْبُو زَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١٤١">وَذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="١٤٢">
    <قول رقم="٢٠">هُمُ الطَّيِّبُو أَخْبَارٍ</قول>
  </مقطع>
  <مقطع رقم="١٤٣">وَإِنْ شِئْتَ نَصَبْتَ عَلَى قَوْلِهِ</مقطع>
  <شاهدة رقم="١٤" xml:id="٤١-١٤">
    <بيت>
      <مصراع>
      <ثبات>الَحَافِظُوَ عَوْرَةَ</ثبات> الْعَشِيرَةِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٤٤">وَتَقُوْلُ فِيْمَا لَا يَقَعُ إِلَّا مُنَوَّنًا</مقطع>
  <مقطع رقم="١٤٥">عَامِلًا في نَكِرَةٍ</مقطع>
  <مقطع رقم="١٤٦">وَإِنَّمَا وَقَعَ مُنَوَّنًا</مقطع>
  <مقطع رقم="١٤٧">لِأَنَّهُ فُصِلَ فِيْهِ</مقطع>
  <مقطع رقم="١٤٨">بَيْنَ الْعَامِلِ وَالْمَعْمُوْلِ</مقطع>
  <مقطع رقم="١٤٩">فَالْفَصْلُ لَازَمٌ لَهُ أَبَدًا</مقطع>
  <مقطع رقم="١٥٠">مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع رقم="١٥١">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="١٥٢">
    <قول رقم="٢١">هُوَ خَيْرٌ مِنْكَ أَبًا</قول>
  </مقطع>
  <مقطع رقم="١٥٣">وَ<قول رقم="٢٢">هُوَ أَحْسَنُ مِنْكَ وَجْهًا</قول>
  </مقطع>
  <مقطع رقم="١٥٤">وَلَا يَكُوْنُ الْمَعْمُوْلُ فِيْهِ إِلَّا مِنْ <هارون مجلد="١" صفحة="٢٠٢"/>سَبَبِهِ</مقطع>
  <مقطع رقم="١٥٥">وَإِنْ شِئْتَ قُلْتَ</مقطع>
  <مقطع رقم="١٥٦">
    <قول رقم="٢٣">هُوَ خَيْرٌ عَمَلًا</قول>
  </مقطع>
  <مقطع رقم="١٥٧">وَأَنْتَ تَنْوِي <حرف>مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="١٥٨">وَإِنْ شِئْتَ أَخَّرْتَ الْفِصَلَ في اللَّفْظِ</مقطع>
  <مقطع رقم="١٥٩">وَأَصْلُهُ التَّقْدِيْمُ</مقطع>
  <مقطع رقم="١٦٠">لِأَنَّهُ لَا يَمْنَعُهُ تَأْخِيْرُهُ عَمَلَهُ مُقَدَّمًا</مقطع>
  <مقطع رقم="١٦١">كَمَا قَالَ</مقطع>
  <مقطع رقم="١٦٢">
    <قول رقم="٢٤">ضَرَبَ زَيْدًا عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١٦٣">فَـ<حرف>عَمَرٌو</حرف>
  </مقطع>
  <مقطع رقم="١٦٤">مُؤَخَّرٌ في اللَّفْظِ</مقطع>
  <مقطع رقم="١٦٥">مَبْدُوءٌ بِهِ في الْمَعْنَى</مقطع>
  <مقطع رقم="١٦٦">وَهٰذَا مَبْدُوءٌ بِهِ</مقطع>
  <مقطع رقم="١٦٧">في أَنَّهُ يُثْبِتُ التَّنْوِينَ ثُمَّ يُعْمِلُ</مقطع>
  <مقطع رقم="١٦٨">وَلَا يَعْمَلُ إِلَّا في نَكِرَةٍ</مقطع>
  <مقطع رقم="١٦٩">كَمَا أَنَّهُ لَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="١٧٠">وَلَا يَقْوَى قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٧١">فَأَلْزَمَ فِيْهِ وَفِيْمَا يَعْمَلُ فِيْهِ وَجَهًا وَاحِدًا</مقطع>
  <مقطع رقم="١٧٢">وَيَعْمَلُ في الْجَمْعِ كَقَوْلِهِمْ</مقطع>
  <مقطع رقم="١٧٣">
    <قول رقم="٢٥">هُوَ خَيْرٌ مِنْكَ أَعْمَالًا</قول>
  </مقطع>
  <مقطع رقم="١٧٤">فَإِنْ أَضَفْتَ فَقُلْتَ</مقطع>
  <مقطع رقم="١٧٥">
    <قول رقم="٢٦">هٰذَا أَوَّلُ رَجُلٍ</قول>
  </مقطع>
  <مقطع رقم="١٧٦">اجْتَمَعَ فِيْهِ لُزُوْمُ النَّكِرَةِ</مقطع>
  <مقطع رقم="١٧٧">وَأَنْ يُلْفَظَ بِوَاحِدٍ</مقطع>
  <مقطع رقم="١٧٨">وَهُوَ يُرِيْدُ الْجَمْعَ</مقطع>
  <مقطع رقم="١٧٩">وَذٰلِكَ لِأِنَّهُ أَرَادَ أَنْ يَقُوْلَ</مقطع>
  <مقطع رقم="١٨٠">
    <قول رقم="٢٧">أَوَّلُ الرِّجَالِ</قول>
  </مقطع>
  <مقطع رقم="١٨١">فَحَذَفَ اسْتِخْفَافًا وَاخْتِصَارًا</مقطع>
  <مقطع رقم="١٨٢">كَمَا قَالُوْا</مقطع>
  <مقطع رقم="١٨٣">
    <قول رقم="٢٨">كُلُّ رَجُلٍ</قول>
  </مقطع>
  <مقطع رقم="١٨٤">يُرِيْدُوْنَ <قول رقم="٢٩">كُلَّ الرِّجَالِ</قول>
  </مقطع>
  <مقطع رقم="١٨٥">فَكَمَا اسْتَخَفُّوا بِحَذْفِ الْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٨٦">اسْتَخَفُّوا بِتَرْكِ بِنَاءِ الْجَمِيْعِ</مقطع>
  <مقطع رقم="١٨٧">وَاسْتَغْنَوْا عَنْ الْأَلْفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٨٨">وَعَنْ قَوْلِهِمْ</مقطع>
  <مقطع رقم="١٨٩">
    <قول رقم="٣٠">خَيْرُ الرِّجَالِ</قول>
  </مقطع>
  <مقطع رقم="١٩٠">وَ<قول رقم="٣١">أَوَّلُ الرِّجَالِ</قول>
  </مقطع>
  <مقطع رقم="١٩١">وَمِثْلُ ذٰلِكَ في تَرْكِ الْأَلِفِ وَاللَّامِ وَبِنَاءِ الْجَمِيْعِ قَوْلُهُمْ</مقطع>
  <مقطع رقم="١٩٢">
    <قول رقم="٣٢">عِشْرُوْنَ دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="١٩٣">إِنَّمَا أَرَادُوْا <حرف>عِشْرِيْنَ مِنَ الدَّرَاهِمِ</حرف>
  </مقطع>
  <مقطع رقم="١٩٤">فَاخْتَصَرُوْا وَاسْتَخَفُّوا</مقطع>
  <مقطع رقم="١٩٥">وَلَمْ يَكُنْ دُخُوْلُ الْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٩٦">يُغَيِّرُ الْعِشْرِيْنَ عَنْ نُكْرَتِهِ</مقطع>
  <مقطع رقم="١٩٧">فَاسْتَخَفُّوا بِتَرْكِ مَا لَمْ يُحْتَجْ إِلَيْهِ</مقطع>
  <مقطع رقم="١٩٨">وَلَمْ تَقْوَ هَذِهِ الْأَحْرُفُ قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٩٩">أَلَا تَرَى أَنَّكَ تُؤَنِّثُهَا وَتَذَكِّرُهَا وَتَجْمَعُهَا كَالْفَاعِلِ</مقطع>
  <مقطع رقم="٢٠٠">تَقُوْلُ</مقطع>
  <مقطع رقم="٢٠١">
    <قول رقم="٣٣">مَرَرْتُ بِرَجُلٍ حَسَنِ الْوَجْهِ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="٢٠٢">كَمَا تَقُوْلُ</مقطع>
  <مقطع رقم="٢٠٣">
    <قول رقم="٣٤">مَرَرْتُ بِرَجُلٍ حَسَنٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="٢٠٤">وَهُوَ مِثْلُ قَوْلِكَ</مقطع>
  <مقطع رقم="٢٠٥">
    <قول رقم="٣٥">مَرَرْتُ بِرَجُلٍ ضَارِبٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="٢٠٦">فَإِنْ جِئْتَ بِـ<حرف>خَيْرٍ مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="٢٠٧">أَوْ <حرف>عِشْرِيْنَ</حرف>
  </مقطع>
  <مقطع رقم="٢٠٨">رَفَعْتَ لِأَنَّهَا مُلْحَقَةٌ بِالْأَسْمَاءِ</مقطع>
  <مقطع رقم="٢٠٩">لَا تَعْمَلُ عَمَلَ الْفِعْلِ</مقطع>
  <مقطع رقم="٢١٠">فَلَمْ تَقْوَ قُوَّةَ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="٢١١">كَمَا لَمْ تَقْوَ الْمُشَبَّهَةُ قُوَّةَ مَا جَرَىْ مَجْرَىْ الْفِعْلِ</مقطع>
  <مقطع رقم="٢١٢">وَتَقُوْلُ</مقطع>
  <مقطع رقم="٢١٣">
    <قول رقم="٣٦">هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢١٤">وَ<قول رقم="٣٧">أَفْرَهُ عَبْدٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢١٥">لِأَنَّ الْفَارِهَ هُوَ الْعَبْدُ</مقطع>
  <مقطع رقم="٢١٦">وَلَمْ تُلْقِ <حرف>أَفْرَهَ</حرف> وَلَا <حرف>خَيْرًا</حرف> عَلَى غَيْرِهِ</مقطع>
  <مقطع رقم="٢١٧">ثُمَّ تَخْتَصُّ شَيْئًا</مقطع>
  <مقطع رقم="٢١٨">فَالْمَعْنَى مُخْتَلِفٌ</مقطع>
  <مقطع رقم="٢١٩">وَلَيْسَ هُنَا فَصْلٌ</مقطع>
  <مقطع رقم="٢٢٠">وَلَمْ يَلْزَمْ إِلِّا تَرْكُ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٢٢١">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> وَ<حرف>خَيْرًا مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٢">لَمْ يَلْزَمْ فِيْهِ إِلَا التَّنْوِيْنُ</مقطع>
  <مقطع رقم="٢٢٣">وَلَمْ يُدْخِلُوَا الْأَلْفَ وَاللَّامَ</مقطع>
  <مقطع رقم="٢٢٤">كَمَا لَمْ يُدْخِلُوْهُ في الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٢٥">وَتَفْسِيْرُهُ تَفْسِيْرُ الْأَوَّلُ</مقطع>
  <مقطع رقم="٢٢٦">وَإِنَّمَا أَرَادُوْا <حرف>أَفْرَهَ الْعَبِيْدِ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٧">وَ <حرف>خَيْرَ الْأَعْمَالِ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٨">وَإِنَّمَا أَثْبَتُوْا الْأَلْفَ وَاللَّامَ في قَوْلِهِمْ <قول رقم="٣٨">أَفْضَلُ النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢٢٩">لِأَنَّ الْأَوَّلَ قَدْ يَصْيِرُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٣٠">فَأَثْبَتُوْا الْأَلِفَ وَاللَّامَ وَبِنَاءَ الْجَمِيْعِ</مقطع>
  <مقطع رقم="٢٣١">وَلَمْ يُنَوَّنْ</مقطع>
  <مقطع رقم="٢٣٢">وَفَرَقُوْا بِتَرْكِ النُّوْنِ وَالتَّنْوْيِنِ بَيْنَ مَعْنَيَيْنِ</مقطع>
  <مقطع رقم="٢٣٣">وَقَدْ جَاءَ مِنْ الْفِعْلِ</مقطع>
  <مقطع رقم="٢٣٤">مَا قَدْ أُنْفِذَ إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="٢٣٥">وَلَمْ يَقْوَ قُوَّةَ غَيْرِهِ</مقطع>
  <مقطع رقم="٢٣٦">مِمَّا قَدْ تَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="٢٣٧">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٣٨">
    <قول رقم="٣٩">امْتَلَأَتُ مَاءً</قول>
  </مقطع>
  <مقطع رقم="٢٣٩">وَ<قول رقم="٤٠">تَفَقَّأْتُ شَحْمًا</قول>
  </مقطع>
  <مقطع رقم="٢٤٠">وَلَا تَقُوْلُ <حرف>امْتَلَأْتُهُ</حرف>
  <هارون مجلد="١" صفحة="٢٠٤"/>وَلَا <حرف>تَفَقَّأْتُهُ</حرف>
  </مقطع>
  <مقطع رقم="٢٤١">وَلَا يَعْمَلُ في غَيْرِهِ مِنَ الْمَعَارِفِ</مقطع>
  <مقطع رقم="٢٤٢">وَلَا يُقَدَّمُ الْمَفْعُولُ فِيْهِ</مقطع>
  <مقطع رقم="٢٤٣">فَتَقُوْلَ <قول رقم="٤١">مَاءً امْتَلَأْتُ</قول>
  </مقطع>
  <مقطع رقم="٢٤٤">كَمَا لَا يُقَدَّمُ الْمَفْعُوُلُ فِيْهِ</مقطع>
  <مقطع رقم="٢٤٥">في الصِّفِةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="٢٤٦">وَلَا في هَذِهِ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="٢٤٧">لِأَنَّهَا لَيْسَتْ كَالْفَاعِلِ</مقطع>
  <مقطع رقم="٢٤٨">وَذٰلِكَ لِأَنَّهُ</مقطع>
  <مقطع رقم="٢٤٩">فِعْلٌ لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="٢٥٠">وَإِنَّمَا هُوَ بِمَنْزِلَةِ الانْفِعَالِ</مقطع>
  <مقطع رقم="٢٥١">لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="٢٥٢">نَحْوُ <قول رقم="٤٢">كَسَرْتُهُ فَانْكَسَرَ</قول>
  </مقطع>
  <مقطع رقم="٢٥٣">وَ<قول رقم="٤٣">دَفَعْتُهُ فَانْدَفَعَ</قول>
  </مقطع>
  <مقطع رقم="٢٥٤">فَهٰذَا النَّحْوُ إِنَّمَا يَكُوْنُ في نَفْسِهِ</مقطع>
  <مقطع رقم="٢٥٥">وَلَا يَقَعُ عَلَى شَئٍ</مقطع>
  <مقطع رقم="٢٥٦">فَصَارَ <حرف>امْتَلَأْتُ</حرف> مِنْ هٰذَا الضَّرْبِ</مقطع>
  <مقطع رقم="٢٥٧">كَأَنَّكَ قُلْتَ <قول رقم="٤٤">مَلَأَنِي فَامْتَلَأْتُ</قول>
  </مقطع>
  <مقطع رقم="٢٥٨">وَمِثْلُهُ <قول رقم="٤٥">دَحْرَجْتُهُ فَتَدَحْرَجَ</قول>
  </مقطع>
  <مقطع رقم="٢٥٩">وَإِنَّمَا أَصْلُهُ</مقطع>
  <مقطع رقم="٢٦٠">
    <قول رقم="٤٦">امْتَلَأْتُ مِنَ المَاءِ</قول>
  </مقطع>
  <مقطع رقم="٢٦١">وَ<قول رقم="٤٧">تَفَقَّأْتُ مِنَ الشَّحْمِ</قول>
  </مقطع>
  <مقطع رقم="٢٦٢">فَحُذِفَ هٰذَا اسْتِخْفَافًا</مقطع>
  <مقطع رقم="٢٦٣">وَكَانَ الْفِعْلُ أَجْدَرُ أَنَ يَتَعَدَّى</مقطع>
  <مقطع رقم="٢٦٤">إنْ كَانَ هٰذَا يَنْفُذُ</مقطع>
  <مقطع رقم="٢٦٥">وَهُوَ</مقطع>
  <مقطع رقم="٢٦٦">في أَنَّهُمْ ضَعَّفُوهُ</مقطع>
  <مقطع رقم="٢٦٧">مِثْلُهُ</مقطع>
  <مقطع رقم="٢٦٨">وَتَقُوْلُ <قول رقم="٤٨">هُوَ أَشْجَعُ النَّاسِ رَجُلًا</قول>
  </مقطع>
  <مقطع رقم="٢٦٩">وَ<قول رقم="٤٩">هُمَا خَيْرُ النَّاسِ اثْنَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٢٧٠">فَالْمَجْرُوْرُ هُنَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٢٧١">وَانْتَصَبَ <حرف>الرَّجُلُ</حرف> وَ<حرف>الِاثْنَانِ</حرف>
  </مقطع>
  <مقطع رقم="٢٧٢">كَمَا انْتَصَبَ <حرف>الْوَجْهُ</حرف>
  </مقطع>
  <مقطع رقم="٢٧٣">في قَوْلِكَ</مقطع>
  <مقطع رقم="٢٧٤">
    <قول رقم="٥٠">هُوَ أَحْسَنُ مِنْهُ وَجْهًا</قول>
  </مقطع>
  <مقطع رقم="٢٧٥">وَلَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="٢٧٦">كَمَا لَمْ يَكُنْ ثَمَّةَ إِلَا نَكِرَةً</مقطع>
  <مقطع رقم="٢٧٧">وَالرَّجُلُ هُوَ الِاسْمُ الْمُبْتَدَأُ</مقطع>
  <مقطع رقم="٢٧٨">وَالِاثْنَانِ كَذٰلِكَ</مقطع>
  <مقطع رقم="٢٧٩">إِنَّمَا مَعْنَاهُ <قول رقم="٥١">هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢٨٠">وَ<قول رقم="٥٢">هُمَا خَيْرُ اثْنَيْنِ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢٨١">وَإِنْ شِئْتَ لَمْ تَجْعَلْهُ الْأَوَّلَ</مقطع>
  <مقطع رقم="٢٨٢">فَتَقُوْلُ</مقطع>
  <مقطع رقم="٢٨٣">
    <قول رقم="٥٣">هُوَ أَكْثَرُ النَّاسِ مَالًا</قول>
  </مقطع>
  <مقطع رقم="٢٨٤">وَمِمَّا أُجْرِيَ هٰذَا الْمُجْرَى</مقطع>
  <مقطع رقم="٢٨٥">أَسْمَاءَ الْعَدَدِ</مقطع>
  <مقطع رقم="٢٨٦">تَقُوْلُ فِيْمَا كَانَ لِأَدْنَى الْعِدَّةِ</مقطع>
  <مقطع رقم="٢٨٧">بِالْإِضَافَةِ إِلَى مَا يُبْنَى لِجَمْعِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع رقم="٢٨٨">إِلَى أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٨٩">وَتُدْخِلُ في الْمُضَافِ إِلَيْهِ الْأَلْفَ وَالَّلامَ</مقطع>
  <مقطع رقم="٢٩٠">لِأَنَّهُ يَكُوْنُ الْأَوَّلُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٩١">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٩٢">
    <قول رقم="٥٤">ثَلَاثَةُ أَبْوَابٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٣">
    <قول رقم="٥٥">وَأَرْبَعَةُ أَنْفُسٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٤">وَ<قول رقم="٥٦">أَرْبَعَةُ أَثْوَابٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٥">فِيْمَا بَيْنَكَ وَبَيْنَ الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٩٦">وَإِذَا أَدْخَلْتَ الْأَلْفَ وَاللَّامَ قُلْتَ</مقطع>
  <مقطع رقم="٢٩٧">
    <قول رقم="٥٧">خَمْسَةُ الأَثْوَابِ</قول> وَ<قول رقم="٥٨">سِتَّةُ الْأَجْمَالِ</قول>
  </مقطع>
  <مقطع رقم="٢٩٨">فَلَا يَكُوْنُ هٰذَا أَبَدًا</مقطع>
  <مقطع رقم="٢٩٩">إِلَّا غَيْرَ مُنَوَّنٍ</مقطع>
  <مقطع رقم="٣٠٠">يَلْزَمُهُ أَمَرٌ وَاحِدٌ</مقطع>
  <مقطع رقم="٣٠١">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٣٠٢">فَإِذَا زِدْتَ عَلَى الْعَشَرَةِ</مقطع>
  <مقطع رقم="٣٠٣">شَيْئًا مِنْ أَسْمَاءِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع رقم="٣٠٤">فَإِنَّهُ يُجْعَلُ مَعَ الْأَوَّلِ</مقطع>
  <مقطع رقم="٣٠٥">اسْمًا وَاحِدًا اسْتَحِفَافًا</مقطع>
  <مقطع رقم="٣٠٦">وَيَكُوْنُ في مَوْضِعِ اسْمٍ مُنَوَّنٍ</مقطع>
  <مقطع رقم="٣٠٧">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٠٨">
    <قول رقم="٥٩">أَحَدَ عَشَرَ دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="٣٠٩">وَ<قول رقم="٦٠">اثْنا عَشَرَ دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="٣١٠">وَ<قول رقم="٦١">إِحْدَى عَشْرَةَ جَارِيَةٍ</قول>
  </مقطع>
  <مقطع رقم="٣١١">فَعَلَى هٰذَا يُجْرَى مِنْ الْوَاحِدُ إِلَى التِّسْعَةِ</مقطع>
  <مقطع رقم="٣١٢">فَإِذَا ضَاعَفْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٣١٣">كَانَ لَهُ اسْمٌ مِنْ لَفْظِهِ</مقطع>
  <مقطع رقم="٣١٤">وَلَا يُثَنَّى الْعَقْدُ</مقطع>
  <مقطع رقم="٣١٥">وَيُجْرَى ذٰلِكَ الْاسْمُ</مقطع>
  <مقطع رقم="٣١٦">مُجْرَى الْوَاحِدِ</مقطع>
  <مقطع رقم="٣١٧">الَّذِي لَحِقَتْهُ الزِيَادَةُ لِلْجَمْعِ</مقطع>
  <مقطع رقم="٣١٨">كَمَا لَحِقَتْهُ الزِّيَادَةُ لِلتَّثْنِيَةِ</مقطع>
  <مقطع رقم="٣١٩">وَيَكُوْنُ حَرْفُ الْإِعْرَابِ الْوَاوَ وَالْيَاءَ</مقطع>
  <مقطع رقم="٣٢٠">وَبَعْدَهُمَا النُّوْنُ</مقطع>
  <مقطع رقم="٣٢١">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٢٢">
    <قول رقم="٦٢">عِشْرُوْنَ دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="٣٢٣">فَإِنْ أَرَدْتَ أَنْ تَثَلِّثَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٣٢٤">كَانَ لَهُ اسْمٌ مِنْ لَفْظِ الثَّلاثَةِ</مقطع>
  <مقطع رقم="٣٢٥">يَجْرِي مَجْرَى الِاسْمِ</مقطع>
  <مقطع رقم="٣٢٦">الَّذِىْ كَانَ لِلتَّثْنِيَةِ</مقطع>
  <هارون مجلد="١" صفحة="٢٠٦"/>
  <مقطع رقم="٣٢٧">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٢٨">
    <قول رقم="٦٣">ثَلَاثُوْنَ عَبْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٢٩">وَكَذٰلِكَ إِلَى أَنْ تُتَسِّعَهُ</مقطع>
  <مقطع رقم="٣٣٠">وَتَكُوْنُ النُّوْنُ لَازَمَةً لَهُ</مقطع>
  <مقطع رقم="٣٣١">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٣٣٢">لَازِمًا لِلثَّلاثَةِ إِلَى الْعَشَرَةِ</مقطع>
  <مقطع رقم="٣٣٣">وَإِنَّمَا فَعَلُوْا هٰذَا بِهَذِهِ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="٣٣٤">وَأَلْزَمُوْهَا وَجَهًا وَاحِدًا</مقطع>
  <مقطع رقم="٣٣٥">لِأَنَّهَا لَيْسَتْ كَالصِّفَةِ الَّتِي في مَعْنَى الْفِعْلِ</مقطع>
  <مقطع رقم="٣٣٦">وَلَا الَّتِي شُبَّهَتْ بِهًا</مقطع>
  <مقطع رقم="٣٣٧">فَلَمْ تَقْوَ تِلْكَ الْقُوَّةَ</مقطع>
  <مقطع رقم="٣٣٨">وَلَمْ يَجُزْ حِيْنَ جَاوَزْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٣٣٩">فِيْمَا تُبَيِّنُ بِهِ مِنْ أَىِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع رقم="٣٤٠">إِلَّا أَنْ يَكُوْنَ لَفْظُهُ وَاحِدًا</مقطع>
  <مقطع رقم="٣٤١">وَلَا تَكُوْنُ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٣٤٢">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٣٤٣">وَكَذٰلِكَ هُوَ إِلَى التِّسْعِيْنَ</مقطع>
  <مقطع رقم="٣٤٤">فِيْمَا يَعْمَلَ فِيْهِ</مقطع>
  <مقطع رقم="٣٤٥">وَيُبَيَّنُ بِهِ</مقطع>
  <مقطع رقم="٣٤٦">مِنْ أَيِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع رقم="٣٤٧">فَإِذَا بَلَغْتَ الْعَقْدَ الَّذِي يَلِيْهِ</مقطع>
  <مقطع رقم="٣٤٨">تَرَكْتَ التَّنْوِينَ وَالنُّوْنَ</مقطع>
  <مقطع رقم="٣٤٩">وَأَضَفْتَ</مقطع>
  <مقطع رقم="٣٥٠">وَجَعَلْتَ</مقطع>
  <مقطع رقم="٣٥١">الَّذِي يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="٣٥٢">وُيُبَّيَنُ بِهِ الْعَدَدُ</مقطع>
  <مقطع رقم="٣٥٣">مِنْ أَىِّ صِنْفٍ هُوَ</مقطع>
  <مقطع رقم="٣٥٤">وَاحِدًا</مقطع>
  <مقطع رقم="٣٥٥">كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَوَّنْتَ فِيْهِ</مقطع>
  <مقطع رقم="٣٥٦">إِلِّا أَنَّكَ تُدْخِلَ فِيْهِ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع رقم="٣٥٧">لِأَنَّ الْأَوَّلَ يَكُوْنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٣٥٨">وَلَا يَكُوْنُ الْمُنَوَّنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٣٥٩">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٦٠">
    <قول رقم="٦٤">مِائَةُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٣٦١">وَ<قول رقم="٦٥">مِائَةُ الدِّرْهَمِ</قول>
  </مقطع>
  <مقطع رقم="٣٦٢">وَذٰلِكَ إِنْ ضَاعَفْتَهُ قُلْتَ</مقطع>
  <مقطع رقم="٣٦٣">
    <قول رقم="٦٦">مِائَتَا دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٣٦٤">وَ<قول رقم="٦٧">مِائَتَا الدِّيْنَارِ</قول>
  </مقطع>
  <مقطع رقم="٣٦٥">وَكَذٰلِكَ الْعَقْدُ الَّذِىْ بَعْدَهُ</مقطع>
  <مقطع رقم="٣٦٦">وَاحَدًا كَانَ أَوْ مُثَنًّى</مقطع>
  <مقطع رقم="٣٦٧">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٦٨">
    <قول رقم="٦٨">أَلْفُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٣٦٩">وَ<قول رقم="٦٩">أَلْفَا دِرْهَمٍ</قول>
  </مقطع>
  <هارون مجلد="١" صفحة="٢٠٧"/>
  <مقطع رقم="٣٧٠">وَقَدْ جَاءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="٣٧١">بَعْضُ هٰذَا مُنَوَّنًا</مقطع>
  <مقطع رقم="٣٧٢">قَالَ الْرُّبَيِّعُ بْنِ ضَبُعٍ الْفَزَارِىُّ</مقطع>
  <شاهدة رقم="١٥" xml:id="٤١-١٥">
    <بيت>
      <مصراع>إِذَا عَاشَ الْفَتَى <ثبات>مِائَتَيْنِ عَامًا</ثبات>
      </مصراع>
      <مصراع>فَقَدْ أَوْدَى الْمَسَرَّةُ وَالْفَتَاءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٧٣">وَقَالَ</مقطع>
  <شاهدة رقم="١٦" xml:id="٤١-١٦">
    <بيت>
      <مصراع>أَنْعَتُ عِيْرًا مِن حَمِيْرِ خَنْزَرَهْ</مصراع>
      <مصراع>في كُلَّ عِيْرٍ <ثبات>مِائَتَانِ كَمَرةً</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٢٠٨"/>
  <مقطع رقم="٣٧٤">وَأَمَّا ثَلٰثُمِائَةٍ إِلَى تِسْعِمِائَةٍ</مقطع>
  <مقطع رقم="٣٧٥">فَكَانَ يَنْبَغِي أَنْ تَكُوْنَ في الْقِيَاسِ</مقطع>
  <مقطع رقم="٣٧٦">
    <حرف>مِئَتَيْنِ</حرف> أَوْ <حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٧٧">وَلَكِنَّهُمْ شَبَّهُوْهُ بِـ<حرف>عِشْرِيْنَ</حرف> وَ<حرف>أَحَدَ عَشَرَ</حرف>
  </مقطع>
  <مقطع رقم="٣٧٨">حَيْثُ جَعَلُوا مَا يُبَيَّنُ بِهِ الْعَدَدُ وَاحِدًا</مقطع>
  <مقطع رقم="٣٧٩">لِأَنَّهُ اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع رقم="٣٨٠">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع رقم="٣٨١">وَلَيْسَ بِمُسْتَنْكَرٍ في كَلَامِهِمْ</مقطع>
  <مقطع رقم="٣٨٢">أَنْ يَكُوْنَ اللَّفْظُ وَاحِدًا</مقطع>
  <مقطع رقم="٣٨٣">وَالْمَعْنَى جَمِيْعٌ</مقطع>
  <مقطع رقم="٣٨٤">حَتَّى قَالَ بَعْضُهُمْ في الشِّعْرِ مِنْ ذٰلِكَ</مقطع>
  <مقطع رقم="٣٨٥">مَا لَا يُسْتَعْمَلُ في الْكَلَامِ</مقطع>
  <مقطع رقم="٣٨٦">وَقَالَ عَلْقَمَةُ بِنُ عَبَدَةَ</مقطع>
  <شاهدة رقم="١٧" xml:id="٤١-١٧">
    <بيت>
      <مصراع>بِهَا جِيَفُ الْحَسْرَى فَأَمَّا عِظَامُهًا</مصراع>
      <مصراع>فَبِيْضٌ وَأَمَّا <ثبات>جِلْدُهًا</ثبات> فَصَلِيبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٨٧">وَقَالَ</مقطع>
  <شاهدة رقم="١٨" xml:id="٤١-١٨">
    <بيت>
      <مصراع>لَا تُنْكِرُوْا الْقَتْلَ وَقَدْ سُبِينًا</مصراع>
      <مصراع>في <ثبات>حَلْقِكُمْ</ثبات> عَظْمٌ وَقَدْ شَجِينًا</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٢٠٩"/>
  <مقطع رقم="٣٨٨">فَاخْتُصَّ التَّثْلِيثُ بِهٰذَا الْبَابِ إِلَى تِسْعِمِائَةٍ</مقطع>
  <مقطع رقم="٣٨٩">كَمَا أَنَّ <حرف>لَدُنْ</حرف> لَهَا في <حرف>غُدْوَةً</حرف> حَالٌ</مقطع>
  <مقطع رقم="٣٩٠">لَيْسَتْ في غَيْرِهًا</مقطع>
  <مقطع رقم="٣٩١">تُنْصَبُ بِهًا</مقطع>
  <مقطع رقم="٣٩٢">كَأَنَّهُ أَلْحَقَ التَّنْوِينَ</مقطع>
  <مقطع رقم="٣٩٣">في لُغَةِ مَنْ قَالَ <حرف>لَدُ</حرف>
  </مقطع>
  <مقطع رقم="٣٩٤">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٩٥">
    <قول رقم="٧٠">مَنْ لَدُنْ غُدْوَةً</قول>
  </مقطع>
  <مقطع رقم="٣٩٦">وَقَالَ بَعْضُهُمْ</مقطع>
  <مقطع رقم="٣٩٧">
    <قول رقم="٧١">لَدَا غَدْوَةً</قول>
  </مقطع>
  <مقطع رقم="٣٩٨">كَأَنَّهُ أَسْكَنَ الدَّالَّ</مقطع>
  <مقطع رقم="٣٩٩">ثُمَّ فَتَحَهًا</مقطع>
  <مقطع رقم="٤٠٠">كَمَا قَالَ <قول رقم="٧٢">اضْرِبَنْ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٤٠١">فَفُتِحَ الْبَاءُ لَمَّا جَاءَ بِالنُّوْنِ الْخَفِيفَةِ</مقطع>
  <مقطع رقم="٤٠٢">وَالْجَرُّ في <حرف>غُدْوَةٍ</حرف> هُوَ الْوَجْهُ وَالْقِيَاسُ</مقطع>
  <مقطع رقم="٤٠٣">وَتَكُوْنُ النُّوْنُ مِنْ نَفْسِ الْحَرْفِ</مقطع>
  <مقطع رقم="٤٠٤">بِمَنْزِلَةِ نُوْنِ <حرف>مِنْ</حرف> وَ<حرف>عَنْ</حرف>
  </مقطع>
  <مقطع رقم="٤٠٥">فَقَدْ يَشَذُّ الشيءُ مِنْ كَلَامِهِمْ عَنْ نَظَائِرِهِ</مقطع>
  <مقطع رقم="٤٠٦">وَيَسْتَخِفُّوْنَ الشيءَ في مَوْضِعٍ وَ لَا يَسْتَخِفُّونَهُ في غَيْرِهِ</مقطع>
  <مقطع رقم="٤٠٧">وَذٰلِكَ قَوْلُهُمْ <قول رقم="٧٣">مَا شَعَرْتُ بِهِ شِعْرَةً</قول> وَ<قول رقم="٧٤">لَيْتَ شِعْرِى</قول>
  </مقطع>
  <مقطع رقم="٤٠٨">وَيَقُوْلُوْنَ <حرف>الْعَمْرُ</حرف> وَ<حرف>الْعُمْرُ</حرف>
  </مقطع>
  <مقطع رقم="٤٠٩">لَا يَقُوْلُوْنَ في الْيَمِيْنِ إِلَّا بِالْفَتْحِ</مقطع>
  <مقطع رقم="٤١٠">يَقُوْلُوْنَ كُلُّهُمْ <حرف>لَعَمْرُكَ</حرف>
  </مقطع>
  <مقطع رقم="٤١١">وَسَتَرَى أَشْبَاهَ هٰذَا أَيْضًا في كَلَامِهِمْ إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٤١٢">وَمِمَّا جَاءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="٤١٣">عَلَى لَفْظِ الْوَاحِدِ يُرَادُ بِهِ الْجَمِيْعُ</مقطع>
  <شاهدة رقم="١٩" xml:id="٤١-١٩">
    <بيت>
      <مصراع>كُلُوْا في بَعْضِ بَطْنِكُمُ تَعِفُّوا</مصراع>
      <مصراع>فَإِنَّ زَمَانَكُمْ زَمَنٌ خَمِيْصُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤١٤">وَمِثْلُ ذٰلِكَ في الْكَلَامِ قَوْلُهُ تَبَارَكَ وَتَعَالَى</مقطع>
  <مقطع رقم="٤١٥">
    <آية>فَإِنْ طِبْنَ لَكُمْ عَنْ شئٌ مِنْهُ نَفْسًا</آية>
  </مقطع>
  <مقطع رقم="٤١٦">وَقَرَرْنَا بِهِ عَيْنًا وَإِنْ شِئْتَ قُلْتُ <حرف>أَعْيُنًا</حرف> وَ<حرف>أَنْفُسًا</حرف>
  </مقطع>
  <هارون مجلد="١" صفحة="٢١٠"/>
  <مقطع رقم="٤١٧">كَمَا قُلْتَ <حرف>ثَلَثِمِائَةٍ</حرف> وَ<حرف>ثَلَاثِ مِئِيْنَ</حرف> وَ<حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع رقم="٤١٨">وَلَمْ يُدْخِلُوَا الْأَلِفَ وَاللَّامَ كَمَا لَمْ يُدْخِلُوَا في <قول رقم="٧٥">امْتَلَأَتُ مَاءً</قول>
  </مقطع>
