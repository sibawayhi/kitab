<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٩"
     درنبورج="١-٨١"
     البكاء="١-٢٦٨"
     هارون="١-١٩٤"
     يعقوب="١-٢٥٦"
     رقم="٤١">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الصِّفَةِ الْمُشَبَّهَةِ بِالْفَاْعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَلَمْ تَقْوَ أَنْ تَعْمَلَ عَمَلَ الْفَاعِلِ</مقطع>
  <مقطع رقم="٣">لِأَنَّهَا لَيْسَتْ في مَعْنَى الْفِعْلِ الْمُضَارِعِ</مقطع>
  <مقطع رقم="٤">فَإِنَّمَا شُبِّهَتْ بِالْفَاعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  <مقطع رقم="٥">وَمَا تَعْمَلُ فِيْهِ مَعْلُوْمٌ</مقطع>
  <مقطع رقم="٦">إِنَّمَا تَعْمَلُ فِيْمَا كَانَ مِنْ سَبَبِهَا</مقطع>
  <مقطع رقم="٧">مُعَرَّفًا بِالْأَلِفِ وَاللَّامِ أَوْ نَكِرَةً</مقطع>
  <مقطع رقم="٨">لَا تُجَاوِزُ هٰذَا</مقطع>
  <مقطع رقم="٩">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا اسْمٍ هُوَ في مَعْنَاهُ</مقطع>
  <رأس هو="٠">
    <عنوان>الإضافة في الصِّفة المُشَبَّهَة</عنوان>
  </رأس>
  <مقطع رقم="١٠">وَالْإِضَافَةُ فِيْهِ أَحْسَنُ وَأَكْثَرُ</مقطع>
  <مقطع رقم="١١">لِأَنَّهُ لَيْسَ كَمَا جَرَى مَجْرَى الْفِعْلِ وَلَا في مَعْنَاهُ</مقطع>
  <مقطع رقم="١٢">فَكَانَ أَحْسَنَ عِنْدَهُمْ أَنْ يَتَبَاعَدَ مِنْهُ في اللَّفْظِ</مقطع>
  <مقطع رقم="١٣">كَمَا أَنَّهُ لَيْسَ مِثْلَهُ في الْمَعْنَى وَفِي قُوَّتِهِ في الْأَشْيَاءِ</مقطع>
  <مقطع رقم="١٤">وَالتَّنْوِيْنُ عَرَبِىٌّ جَيِّدٌ</مقطع>
  <مقطع رقم="١٥">وَمَعَ هٰذَا أَنَّهُمْ لَوْ تَرَكُوا التَّنْوِينَ أَوِ النُّوْنَ</مقطع>
  <مقطع رقم="١٦">لَمْ يَكُنْ أَبَدًا إِلَّا نَكِرَةً عَلَى حَالِهِ مِنَوَّنًا</مقطع>
  <مقطع رقم="١٧">فَلَمَّا كَانَ تَرْكُ التَّنْوِيْنِ فِيْهِ وَالْنُّوْنُ</مقطع>
  <مقطع رقم="١٨">لَا يُجَاوَزُ بِهِ مَعْنَى النُّوْنِ وَالتَّنْوْيِنِ</مقطع>
  <مقطع رقم="١٩">كَانَ تَرْكُهُمَا أَخَفَّ عَلَيْهِمْ</مقطع>
  <مقطع رقم="٢٠">فَهٰذَا يُقَوِّى أَنَّ الْإِضَافَةَ أَحْسَنُ مَعَ التَّفْسِيْرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢١">فَالْمُضَافُ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٢">
    <قول رقم="١">هٰذَا حَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٢٣">وَ<قول رقم="٢">هَذِهِ حَسَنَةُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٢٤">فَالصِّفَةُ تَقَعُ عَلَى الِاسْمِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٥">ثُمَّ تُوْصِلُهُا إِلَى <حرف>الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٢٦">وَإِلَى كُلِّ شَيءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="٢٧">عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٢٨">كَمَا تَقُوْلُ</مقطع>
  <مقطع رقم="٢٩">
    <قول رقم="٣">هٰذَا ضَارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣٠">وَ<قول رقم="٤">هَذِهِ ضَارِبَةُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣١">إِلَّا أَنَّ الْحُسْنَ في الْمَعْنَى لِلْوَجْهِ</مقطع>
  <مقطع رقم="٣٢">وَالضَّرْبُ هٰهُنَا لِلْأَوَّلِ</مقطع>
  <مقطع رقم="٣٣">وَمِنْ ذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="٣٤">
    <قول رقم="٥">هُوَ أَحْمَرُ بَيْنِ الْعَيْنَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٣٥">وَ<قول رقم="٦">هُوَ جَيِّدُ وَجْهِ الْدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٣٦">وَمِمَّا جَاءَ مُنَّوْنًا قَوْلُ <شاعر>زُهَيْرٍ</شاعر>
  </مقطع>
  <شاهدة رقم="١" xml:id="٤١-١">
    <بيت>
      <مصراع>أَهْوَى لَهَا أَسْفَعُ الْخَدَّيْنِ <ثبات>مُطَّرِقٌ</ثبات>
      </مصراع>
      <مصراع>
      <ثبات>رِيْشَ</ثبات> الْقَوَادِمِ لَمْ تُنْصَبْ لَهُ الْشَّبَكُ</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="١٩٥"/>
  <مقطع رقم="٣٧">وَقَالَ <شاعر>الْعَجَّاجُ</شاعر>
  </مقطع>
  <شاهدة رقم="٢" xml:id="٤١-٢">
    <بيت>
      <مصراع>مُحْتَبِكٌ <ثبات>ضَخْمٌ شُئُوْنَ</ثبات> الْرَّأْسِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٨">وَقَالَ أَيْضًا <شاعر>النَّابِغَةِ</شاعر>
  </مقطع>
  <شاهدة رقم="٣" xml:id="٤١-٣">
    <بيت>
      <مصراع>وَنَأْخُذْ بَعْدَهُ بِذِنَابِ عَيْشٍ</مصراع>
      <مصراع>
      <ثبات>أَجبَّ الظَّهْرَ</ثبات> لَيْسَ لَهُ سَنَامُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٩">وَهُوَ في الشِّعْرِ كَثِيْرٌ</مقطع>
  <مقطع رقم="٤٠">وَاعْلَمْ أَنَّ كَيْنُوْنَةَ الْأَلِفِ وَاللَّامِ في الِاسْمِ الْآخِرِ</مقطع>
  <مقطع رقم="٤١">أَكْثَرُ وَأَحْسَنُ مِنْ أَنْ لَا تَكُوْنَ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٤٢">لِأَنَّ الْأَوَّلَ في الْأَلِفِ وَاللَّامِ وَفي غَيْرِهِمَا هٰهُنَا عَلَى حَالَةٍ وَاحِدَةٍ</مقطع>
  <مقطع رقم="٤٣">وَلَيْسَ كَالْفَاعِلِ</مقطع>
  <مقطع رقم="٤٤">فَكَانَ إِدْخَالُهُمَا أَحْسَنَ وَأَكْثَرَ</مقطع>
  <مقطع رقم="٤٥">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ أَكْثَرَ</مقطع>
  <مقطع رقم="٤٦">وَكَانَ الْأَلِفُ وَاللَّامُ أَوْلَى</مقطع>
  <مقطع رقم="٤٧">لِأَنَّ مَعْنَاهُ <قول رقم="٧">
  <تقدير>هٰذا</تقدير>
  <أصل>حَسَنٌ وَجْهُهُ</أصل>
</قول>
  </مقطع>
  <مقطع رقم="٤٨">فَكَمَا لَا يَكُوْنُ <حرف>هٰذَا</حرف> إِلَّا مَعْرِفَةً</مقطع>
  <مقطع رقم="٤٩">اِخْتَارُوْا في ذٰلِكَ الْمَعْرِفَةَ</مقطع>
  <مقطع رقم="٥٠">وَالْأُخْرَى عَرَبِيَّةٌ</مقطع>
  <مقطع رقم="٥١">كَمَا أَنَّ التَّنْوِينَ وَالنُّوْنَ عَرَبِىٌّ مُطَّرِدٌ</مقطع>
  <مقطع رقم="٥٢">فَمِنْ ذٰلِكَ قَوْلُهُ <قول رقم="٨">هُوَ حَدِيْثُ عَهْدٍ بِالْوَجَعِ</قول>
  </مقطع>
  <مقطع رقم="٥٣">وَقَالَ عَمْرُو بْنُ شَأْسٍ</مقطع>
  <شاهدة رقم="٤" xml:id="٤١-٤">
    <بيت>
      <مصراع>أَلِكْنِي إِلَى قَوْمِي السَّلامَ رِسَالَةً</مصراع>
      <مصراع>بِآيَةِ مَا كَانُوْا ضِعَافًا وَلَا عُزْلا</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَلَا سَيِّئِي زِيٍّ إِذَا مَا تَلَبَّسُوا</مصراع>
      <مصراع>إِلَى حَاجَةٍ يَوْمًا مُخَيَّسَةً بُزْلا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٤">وَقَالَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة رقم="٥" xml:id="٤١-٥">
    <بيت>
      <مصراع>لَاحِقُ بَطْنِ بِقَرًا سَمِيْنِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٥">وَمِمَّا جَاءَ مِنَوَّنًا قَوْلُ <شاعر>أَبِي زُبَيْدٍ</شاعر> يَصِفُ الْأَسَدَ</مقطع>
  <شاهدة رقم="٦" xml:id="٤١-٦">
    <بيت>
      <مصراع>كَأَنَّ أَثْوَابَ نَقّادٍ قُدِرْنَ لَهُ</مصراع>
      <مصراع>يَعْلُو بِخَمْلَتِها <ثبات>كَهْبَاءَ هُدَّابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٦">وَقَالَ أَيْضًا</مقطع>
  <شاهدة رقم="٧" xml:id="٤١-٧">
    <بيت>
      <مصراع>هَيْفَاءُ مُقْبِلَةً عَجْزَاءُ مُدْبِرَةً</مصراع>
      <مصراع>مَحْطُوْطَةٌ جُدِلَتْ <ثبات>شَنْبَاءُ أَنْيَابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٧">وَقَالَ عَدِىِّ بْنِ زَيْدِ</مقطع>
  <شاهدة رقم="٨" xml:id="٤١-٨">
    <بيت>
      <مصراع>مِنْ حَبِيْبٍ أَوْ أَخِي ثِقَةٍ</مصراع>
      <مصراع>أَوْ عَدُوٍّ <ثبات>شَاْحِطٍ دَاْرًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٨">وَقَدْ جَاءَ في الشِّعْرِ <قول رقم="٩">حَسَنَةُ وَجْهِهَا</قول>
  </مقطع>
  <مقطع رقم="٥٩">شَبَّهُوْهُ بِـ<قول رقم="١٠">حَسَنَةِ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٦٠">وَذٰلِكَ رَدِيءٌ</مقطع>
  <قائمة>
    <وحدة>
      <مقطع رقم="٦١">لِأَنَّهُ بِالْهَاءِ مَعْرِفَةٌ كَمَا كَانَ بِالْأَلِفِ وَاللَّامِ</مقطع>
    </وحدة>
    <وحدة>
      <مقطع رقم="٦٢">وَهُوَ مِنْ سَبَبِ الْأَوَّلِ كَمَا أَنَّهُ مِن سَبَبِهِ بِالْأَلِفِ وَاللَّامِ</مقطع>
    </وحدة>
  </قائمة>
  <مقطع رقم="٦٣">قَالَ الشَّمَّاخِ</مقطع>
  <شاهدة رقم="٩" xml:id="٤١-٩">
    <بيت>
      <مصراع>أَمِنْ دِمْنَتَيْنِ عَرَّسَ الْرَّكْبُ فِيْهِمَا</مصراع>
      <مصراع>بِحَقْلِ الرُّخَامَى قَدْ عَفَا طَلَلاهُما</مصراع>
    </بيت>
    <بيت>
      <مصراع>أَقَامَتْ عَلَى رَبْعَيْهِمَا <ثبات>جَارَتَا صَفّا</ثبات>
      </مصراع>
      <مصراع>كُمَيْتَا الْأَعَالِىَ <ثبات>جَوْنَتَا مُصْطَلاهُمَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>

  <رأس هو="٠">
    <عنوان>دُخُولُ الأَلِفِ وَالَّامِ في الْمُضَاْفِ</عنوان>
  </رأس>
  <مقطع رقم="٦٤">وَاعْلَمْ أَنَّهُ لَيْسَ في الْعَرَبِيَّةِ</مقطع>
  <مقطع رقم="٦٥">مُضَافٌ يَدْخُلُ عَلَيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٦٦">غَيْرُ الْمُضَافِ <هارون مجلد="١" صفحة="١٩٩"/>إِلَى الْمَعْرِفَةِ في هٰذَا الْبَابِ</مقطع>
  <مقطع رقم="٦٧">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٦٨">
    <قول رقم="١١">هٰذَا الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٦٩">أَدْخَلُوْا الْأَلِفَ وَالْلَّامَ عَلَى <حرف>حَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٧٠">لِأَنَّهُ مُضَافٌ إِلَى مَعْرِفَةٍ</مقطع>
  <مقطع رقم="٧١">لَا يُكُونُ بِهَا مَعْرِفَةً أَبَدًا</مقطع>
  <مقطع رقم="٧٢">فَاحْتَاجَ إِلَى ذٰلِكَ</مقطع>
  <مقطع رقم="٧٣">حَيْثُ مُنِعَ مَا يَكُوْنُ في مِثْلِهِ الْبَتَّةَ</مقطع>
  <مقطع رقم="٧٤">وَلَا يُجَاوَزُ بِهِ مَعْنَى التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٧٥">فَأَمَّا النَّكِرَةُ فَلَا يَكُوْنُ فِيْهَا إِلَّا <حرف>الْحَسَنُ وَجْهًا</حرف>
  </مقطع>
  <مقطع رقم="٧٦">تَكُوْنُ الْأَلِفُ وَاللَّامُ بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٧٧">لِأَنَّكَ لَوْ قُلْتَ <حرف>حَدِيْثُ عَهْدٍ</حرف> أَوْ <حرف>كَرِيْمُ أَبٍ</حرف>
  </مقطع>
  <مقطع رقم="٧٨">لَمْ تُخْلِلْ بِالْأَوَّلِ في شَيءٍ</مقطع>
  <مقطع رقم="٧٩">فَتَحْتَمِلَ لَهُ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع رقم="٨٠">لِأَنَّهُ عَلَى مَا يَنْبَغِي أَنْ يَكُوْنَ عَلَيْهِ</مقطع>
  <مقطع رقم="٨١">قَالَ رُؤْبَةُ</مقطع>
  <شاهدة رقم="١٠" xml:id="٤١-١٠">
    <بيت>
      <مصراع>
        <ثبات>الْحَزْنُ بَابًا</ثبات> وَ<ثبات>الْعُقُوْرُ كَلْبًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٢">وَزَعَمَ أَبُوْ الْخَطَّابِ أَنَّهُ سَمِعَ قَوْمًا مِنْ الْعَرَبِ يُنْشِدُوْنَ هٰذَا الْبَيْتَ لِـ<شاعر>ـلْحَارِثِ ابْنِ ظَالِمٍ</شاعر></مقطع>
  <شاهدة رقم="١١" xml:id="٤١-١١">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الْشُّعْرَى رِقَابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٣">فَإِنَّمَا أُدْخِلَتْ الْأَلِفُ وَاللَّامُ في الْـ<حرف>حَسَنِ</حرف>
  </مقطع>
  <مقطع رقم="٨٤">ثُمَّ أَعْمَلْتَهُ</مقطع>
  <مقطع رقم="٨٥">كَمَا قَالَ <قول رقم="١٢">الضَّارِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٨٦">وَعَلَىَ هٰذَا الْوَجْهِ تَقُوْلُ <قول رقم="١٣">هُوَ الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَهِىَ عَرَبِيَّةٌ جَيِّدَةٌ</مقطع>
  <مقطع رقم="٨٨">قَالَ الشَّاعِرُ</مقطع>
  <شاهدة رقم="١٢" xml:id="٤١-١٢">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الْشُّعْرِ الْرِّقَابًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٩">وَقَدْ يَجُوْزُ في هٰذَا</مقطع>
  <مقطع رقم="٩٠">أَنْ تَقُوْلَ <قول رقم="١٤">هُوَ الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٩١">عَلَى قَوْلِهِ <قول رقم="١٥">هُوَ الضَّارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٩٢">فَالْجَّرُ في هٰذَا الْبَابِ مِنْ وَجْهَيْنِ</مقطع>
  <مقطع رقم="٩٣">مِنَ البَابِ الَّذِي هُوَ لَهُ وَهُوَ الْإِضَافَةُ</مقطع>
  <مقطع رقم="٩٤">وَمِنْ إِعْمَالِ الْفِعْلِ ثُمَّ يُسْتَخَفُّ فَيُضَافُ</مقطع>
  <مقطع رقم="٩٥">فَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ فَأَثْبَتَّ الْنُّوْنَ فَلَيْسَ إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="٩٦">وَذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="٩٧">
    <قول رقم="١٦">هُمُ الطَّيِّبُونَ الْأَخْبَارَ</قول>
  </مقطع>
  <مقطع رقم="٩٨">
    <قول رقم="١٧">وَهُمَا الْحَسَنَانِ الْوُجُوْهَ</قول>
  </مقطع>
  <مقطع رقم="٩٩">وَمِنْ ذٰلِكَ قَوْلُهُ تَعَالَى</مقطع>
  <مقطع رقم="١٠٠">
    <آية>قُلْ هَلْ نُنَبَّئُكُمْ بِالْأَخْسَرِينَ أَعْمَالا</آية>
  </مقطع>
  <هارون مجلد="١" صفحة="٢٠١"/>
  <مقطع رقم="١٠١">وَقَالَتْ خِرْنِقُ مِنْ بَنِىٓ قَيْسٍ</مقطع>
  <شاهدة رقم="١٣" xml:id="٤١-١٣">
    <بيت>
      <مصراع>لَا يَبْعَدَنْ قَوْمِي الَّذِيْنَ هُمُ</مصراع>
      <مصراع>سَمُّ الْعُدَاةِ وَآفَةُ الْجُزْرِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>الْنَّازِلُوْنَ بِكُلّ مُعْتَرَكٍ</مصراع>
      <مصراع>وَ<ثبات>الْطَّيِّبُونَ مَعَاقِدَ الْأَزْرِ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠٢">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
  <مقطع رقم="١٠٣">كَانَ الْمَعْمُوْلُ فِيْهِ نَكِرَةً أَوْ فِيْهِ أَلْفٌ وَلَامٌ</مقطع>
  <مقطع رقم="١٠٤">كَمَا قُلْتَ <قول رقم="١٨">هَؤُلَاءِ الضَارْبُو زَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١٠٥">وَذٰلِكَ قَوْلُهُمْ <قول رقم="١٩">هُمُ الطَّيِّبُو أَخْبَارٍ</قول>
  </مقطع>
  <مقطع رقم="١٠٦">وَإِنْ شِئْتَ نَصَبْتَ عَلَى قَوْلِهِ</مقطع>
  <شاهدة رقم="١٤" xml:id="٤١-١٤">
    <بيت>
      <مصراع>
      <ثبات>الَحَافِظُوَ عَوْرَةَ</ثبات> الْعَشِيرَةِ</مصراع>
    </بيت>
  </شاهدة>

  <رأس هو="٠">
    <عنوان>إثْباتُ التَّنْوِيْنِ</عنوان>
  </رأس>

  <مقطع رقم="١٠٧">وَتَقُوْلُ فِيْمَا لَا يَقَعُ إِلَّا مُنَوَّنًا عَامِلًا في نَكِرَةٍ</مقطع>
  <مقطع رقم="١٠٨">وَإِنَّمَا وَقَعَ مُنَوَّنًا لِأَنَّهُ فُصِلَ فِيْهِ بَيْنَ الْعَامِلِ وَالْمَعْمُوْلِ</مقطع>
  <مقطع رقم="١٠٩">فَالْفَصْلُ لَازَمٌ لَهُ أَبَدًا مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع رقم="١١٠">وَذٰلِكَ قَوْلُكَ <قول رقم="٢٠">هُوَ خَيْرٌ مِنْكَ أَبًا</قول>
  </مقطع>
  <مقطع رقم="١١١">وَ<قول رقم="٢١">هُوَ أَحْسَنُ مِنْكَ وَجْهًا</قول>
  </مقطع>
  <مقطع رقم="١١٢">وَلَا يَكُوْنُ الْمَعْمُوْلُ فِيْهِ إِلَّا مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="١١٣">وَإِنْ شِئْتَ قُلْتَ <قول رقم="٢٢">هُوَ خَيْرٌ عَمَلًا</قول>
  </مقطع>
  <مقطع رقم="١١٤">وَأَنْتَ تَنْوِي <حرف>مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="١١٥">وَإِنْ شِئْتَ أَخَّرْتَ الْفَصْلَ في اللَّفْظِ وَأَصْلُهُ التَّقْدِيْمُ</مقطع>
  <مقطع رقم="١١٦">لِأَنَّهُ لَا يَمْنَعُهُ تَأْخِيْرُهُ عَمَلَهُ مُقَدَّمًا</مقطع>
  <مقطع رقم="١١٧">كَمَا قَالَ <قول رقم="٢٣">ضَرَبَ زَيْدًا عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١١٨">فَـ<حرف>عَمَرٌو</حرف> مُؤَخَّرٌ في اللَّفْظِ مَبْدُوءٌ بِهِ في الْمَعْنَى</مقطع>
  <مقطع رقم="١١٩">وَهٰذَا مَبْدُوءٌ بِهِ</مقطع>
  <مقطع رقم="١٢٠">في أَنَّهُ يُثْبِتُ التَّنْوِينَ ثُمَّ يُعْمِلُ</مقطع>
  <مقطع رقم="١٢١">وَلَا يَعْمَلُ إِلَّا في نَكِرَةٍ كَمَا أَنَّهُ لَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="١٢٢">وَلَا يَقْوَى قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٢٣">فَأَلْزَمَ فِيْهِ وَفِيْمَا يَعْمَلُ فِيْهِ وَجَهًا وَاحِدًا</مقطع>
  <مقطع رقم="١٢٤">وَيَعْمَلُ في الْجَمْعِ كَقَوْلِهِمْ</مقطع>
  <مقطع رقم="١٢٥">
    <قول رقم="٢٤">هُوَ خَيْرٌ مِنْكَ أَعْمَالًا</قول>
  </مقطع>
  <مقطع رقم="١٢٦">فَإِنْ أَضَفْتَ فَقُلْتَ <قول رقم="٢٥">هٰذَا أَوَّلُ رَجُلٍ</قول>
  </مقطع>
  <مقطع رقم="١٢٧">اجْتَمَعَ فِيْهِ لُزُوْمُ النَّكِرَةِ</مقطع>
  <مقطع رقم="١٢٨">وَأَنْ يُلْفَظَ بِوَاحِدٍ وَهُوَ يُرِيْدُ الْجَمْعَ</مقطع>
  <مقطع رقم="١٢٩">وَذٰلِكَ لِأِنَّهُ أَرَادَ أَنْ يَقُوْلَ <قول رقم="٢٦">
  <تقدير>هٰذا</تقدير>
  <أصل>أَوَّلُ الرِّجَالِ</أصل>
</قول>
  </مقطع>
  <مقطع رقم="١٣٠">فَحَذَفَ اسْتِخْفَافًا وَاخْتِصَارًا</مقطع>
  <مقطع رقم="١٣١">كَمَا قَالُوْا <قول رقم="٢٧">كُلُّ رَجُلٍ</قول> يُرِيْدُوْنَ <قول رقم="٢٨">
  <تقدير>هٰذا</تقدير>
  <أصل>كُلُّ الرِّجَالِ</أصل>
</قول>
  </مقطع>
  <مقطع رقم="١٣٢">فَكَمَا اسْتَخَفُّوا بِحَذْفِ الْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٣٣">اسْتَخَفُّوا بِتَرْكِ بِنَاءِ الْجَمِيْعِ</مقطع>
  <مقطع رقم="١٣٤">وَاسْتَغْنَوْا عَنْ الْأَلْفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٣٥">وَعَنْ قَوْلِهِمْ <قول رقم="٢٩">خَيْرُ الرِّجَالِ</قول> وَ<قول رقم="٣٠">أَوَّلُ الرِّجَالِ</قول>
  </مقطع>
  <مقطع رقم="١٣٦">وَمِثْلُ ذٰلِكَ في تَرْكِ الْأَلِفِ وَاللَّامِ وَبِنَاءِ الْجَمِيْعِ</مقطع>
  <مقطع رقم="١٣٧">قَوْلُهُمْ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="١٣٨">إِنَّمَا أَرَادُوْا <حرف>عِشْرِيْنَ مِنَ الدَّرَاهِمِ</حرف>
  </مقطع>
  <مقطع رقم="١٣٩">فَاخْتَصَرُوْا وَاسْتَخَفُّوا</مقطع>
  <مقطع رقم="١٤٠">وَلَمْ يَكُنْ دُخُوْلُ الْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٤١">يُغَيِّرُ الْـ<حرف>عِشْرِيْنَ</حرف> عَنْ نَكِرَتِهِ</مقطع>
  <مقطع رقم="١٤٢">فَاسْتَخَفُّوا بِتَرْكِ مَا لَمْ يُحْتَجْ إِلَيْهِ</مقطع>

  <رأس هو="٠">
    <عنوان>؟</عنوان>
  </رأس>
  <مقطع رقم="١٤٣">وَلَمْ تَقْوَ هَذِهِ الْأَحْرُفُ قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٤٤">أَلَا تَرَى أَنَّكَ تُؤَنِّثُهَا وَتَذَكِّرُهَا وَتَجْمَعُهَا كَالْفَاعِلِ</مقطع>
  <مقطع رقم="١٤٥">تَقُوْلُ <قول رقم="٣١">مَرَرْتُ بِرَجُلٍ حَسَنِ الْوَجْهِ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٦">كَمَا تَقُوْلُ <قول رقم="٣٢">مَرَرْتُ بِرَجُلٍ حَسَنٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٧">وَهُوَ مِثْلُ قَوْلِكَ <قول رقم="٣٣">مَرَرْتُ بِرَجُلٍ ضَارِبٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٨">فَإِنْ جِئْتَ بِـ<حرف>خَيْرٍ مِنْكَ</حرف> أَوْ <حرف>عِشْرِيْنَ</حرف> رَفَعْتَ</مقطع>
  <مقطع رقم="١٤٩">لِأَنَّهَا مُلْحَقَةٌ بِالْأَسْمَاءِ لَا تَعْمَلُ عَمَلَ الْفِعْلِ</مقطع>
  <مقطع رقم="١٥٠">فَلَمْ تَقْوَ قُوَّةَ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٥١">كَمَا لَمْ تَقْوَ الْمُشَبَّهَةُ قُوَّةَ مَا جَرَى مَجْرَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٥٢">وَتَقُوْلُ <قول رقم="٣٤">هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="١٥٣">وَ<قول رقم="٣٥">
  <تقدير>هُوَ</تقدير>
  <أصل>أَفْرَهُ عَبْدٍ في النَّاسِ</أصل>
</قول>
  </مقطع>
  <مقطع رقم="١٥٤">لِأَنَّ الْفَارِهَ هُوَ الْعَبْدُ</مقطع>
  <مقطع رقم="١٥٥">وَلَمْ تُلْقِ <حرف>أَفْرَهَ</حرف> وَلَا <حرف>خَيْرًا</حرف> عَلَى غَيْرِهِ</مقطع>
  <مقطع رقم="١٥٦">ثُمَّ تَخْتَصُّ شَيْئًا</مقطع>
  <مقطع رقم="١٥٧">فَالْمَعْنَى مُخْتَلِفٌ</مقطع>
  <مقطع رقم="١٥٨">وَلَيْسَ هُنَا فَصْلٌ</مقطع>
  <مقطع رقم="١٥٩">وَلَمْ يَلْزَمْ إِلِّا تَرْكُ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="١٦٠">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> وَ<حرف>خَيْرًا مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="١٦١">لَمْ يَلْزَمْ فِيْهِ إِلَا التَّنْوِيْنُ</مقطع>
  <مقطع رقم="١٦٢">وَلَمْ يُدْخِلُوْا الْأَلْفَ وَاللَّامَ</مقطع>
  <مقطع رقم="١٦٣">كَمَا لَمْ يُدْخِلُوْهُ في الْأَوَّلِ</مقطع>
  <مقطع رقم="١٦٤">وَتَفْسِيْرُهُ تَفْسِيْرُ الْأَوَّلُ</مقطع>
  <مقطع رقم="١٦٥">وَإِنَّمَا أَرَادُوْا <حرف>أَفْرَهَ الْعَبِيْدِ</حرف>
  </مقطع>
  <مقطع رقم="١٦٦">وَ <حرف>خَيْرَ الْأَعْمَالِ</حرف>
  </مقطع>
  <مقطع رقم="١٦٧">وَإِنَّمَا أَثْبَتُوْا الْأَلْفَ وَاللَّامَ في قَوْلِهِمْ <حرف>أَفْضَلُ النَّاسِ</حرف>
  </مقطع>
  <مقطع رقم="١٦٨">لِأَنَّ الْأَوَّلَ قَدْ يَصْيِرُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="١٦٩">فَأَثْبَتُوْا الْأَلِفَ وَاللَّامَ وَبِنَاءَ الْجَمِيْعِ وَلَمْ يُنَوَّنْ</مقطع>
  <مقطع رقم="١٧٠">وَفَرَقُوْا بِتَرْكِ النُّوْنِ وَالتَّنْوْيِنِ بَيْنَ مَعْنَيَيْنِ</مقطع>

  <رأس هو="٠">
    <عنوان>امْتَلَأَتُ مَاءً</عنوان>
  </رأس>
  <مقطع رقم="١٧١">وَقَدْ جَاءَ مِنْ الْفِعْلِ مَا قَدْ أُنْفِذَ إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٧٢">وَلَمْ يَقْوَ قُوَّةَ غَيْرِهِ مِمَّا قَدْ تَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٧٣">وَذٰلِكَ قَوْلُكَ <قول رقم="٣٦">امْتَلَأَتُ مَاءً</قول>
  </مقطع>
  <مقطع رقم="١٧٤">وَ<قول رقم="٣٧">تَفَقَّأْتُ شَحْمًا</قول>
  </مقطع>
  <مقطع رقم="١٧٥">وَلَا تَقُوْلُ <حرف>امْتَلَأْتُهُ</حرف> وَلَا <حرف>تَفَقَّأْتُهُ</حرف>
  </مقطع>
  <مقطع رقم="١٧٦">وَلَا يَعْمَلُ في غَيْرِهِ مِنَ الْمَعَارِفِ</مقطع>
  <مقطع رقم="١٧٧">وَلَا يُقَدَّمُ الْمَفْعُولُ فِيْهِ</مقطع>
  <مقطع رقم="١٧٨">فَتَقُوْلَ <قول رقم="٣٨">مَاءً امْتَلَأْتُ</قول>
  </مقطع>
  <مقطع رقم="١٧٩">كَمَا لَا يُقَدَّمُ الْمَفْعُوُلُ فِيْهِ</مقطع>
  <مقطع رقم="١٨٠">في الصِّفِةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٨١">وَلَا في هَذِهِ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="١٨٢">لِأَنَّهَا لَيْسَتْ كَالْفَاعِلِ</مقطع>
  <مقطع رقم="١٨٣">وَذٰلِكَ لِأَنَّهُ</مقطع>
  <مقطع رقم="١٨٤">فِعْلٌ لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٨٥">وَإِنَّمَا هُوَ بِمَنْزِلَةِ الانْفِعَالِ</مقطع>
  <مقطع رقم="١٨٦">لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٨٧">نَحْوُ <قول رقم="٣٩">كَسَرْتُهُ فَانْكَسَرَ</قول>
  </مقطع>
  <مقطع رقم="١٨٨">وَ<قول رقم="٤٠">دَفَعْتُهُ فَانْدَفَعَ</قول>
  </مقطع>
  <مقطع رقم="١٨٩">فَهٰذَا النَّحْوُ إِنَّمَا يَكُوْنُ في نَفْسِهِ</مقطع>
  <مقطع رقم="١٩٠">وَلَا يَقَعُ عَلَى شَئٍ</مقطع>
  <مقطع رقم="١٩١">فَصَارَ <حرف>امْتَلَأْتُ</حرف> مِنْ هٰذَا الضَّرْبِ</مقطع>
  <مقطع رقم="١٩٢">كَأَنَّكَ قُلْتَ <قول رقم="٤١">مَلَأَنِي فَامْتَلَأْتُ</قول>
  </مقطع>
  <مقطع رقم="١٩٣">وَمِثْلُهُ <قول رقم="٤٢">دَحْرَجْتُهُ فَتَدَحْرَجَ</قول>
  </مقطع>
  <مقطع رقم="١٩٤">وَإِنَّمَا أَصْلُهُ</مقطع>
  <مقطع رقم="١٩٥">
    <قول رقم="٤٣">امْتَلَأْتُ مِنَ المَاءِ</قول>
  </مقطع>
  <مقطع رقم="١٩٦">وَ<قول رقم="٤٤">تَفَقَّأْتُ مِنَ الشَّحْمِ</قول>
  </مقطع>
  <مقطع رقم="١٩٧">فَحُذِفَ هٰذَا اسْتِخْفَافًا</مقطع>
  <مقطع رقم="١٩٨">وَكَانَ الْفِعْلُ أَجْدَرُ أَنَ يَتَعَدَّى</مقطع>
  <مقطع رقم="١٩٩">إنْ كَانَ هٰذَا يَنْفُذُ</مقطع>
  <مقطع رقم="٢٠٠">وَهُوَ في أَنَّهُمْ ضَعَّفُوهُ مِثْلُهُ</مقطع>

  <رأس هو="٠">
    <عنوان>؟</عنوان>
  </رأس>
  <مقطع رقم="٢٠٣">وَتَقُوْلُ <قول رقم="٤٥">هُوَ أَشْجَعُ النَّاسِ رَجُلًا</قول>
  </مقطع>
  <مقطع رقم="٢٠٤">وَ<قول رقم="٤٦">هُمَا خَيْرُ النَّاسِ اثْنَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٢٠٥">فَالْمَجْرُوْرُ هُنَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٢٠٦">وَانْتَصَبَ الـ<حرف>رَّجُلُ</حرف> وَالـ<حرف>اثْنَانِ</حرف></مقطع>
  <مقطع رقم="٢٠٧">كَمَا انْتَصَبَ <حرف>الْوَجْهُ</حرف> في قَوْلِكَ</مقطع>
  <مقطع رقم="٢٠٩"><قول رقم="٤٧">هُوَ أَحْسَنُ مِنْهُ وَجْهًا</قول></مقطع>
  <مقطع رقم="٢١٠">وَلَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="٢١١">كَمَا لَمْ يَكُنْ ثَمَّةَ إِلَا نَكِرَةً</مقطع>
  <مقطع رقم="٢١٢">وَالرَّجُلُ هُوَ الِاسْمُ الْمُبْتَدَأُ</مقطع>
  <مقطع رقم="٢١٣">وَالِاثْنَانِ كَذٰلِكَ</مقطع>
  <مقطع رقم="٢١٤">إِنَّمَا مَعْنَاهُ <قول رقم="٤٨">هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢١٥">وَ<قول رقم="٤٩">هُمَا خَيْرُ اثْنَيْنِ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="٢١٦">وَإِنْ شِئْتَ لَمْ تَجْعَلْهُ الْأَوَّلَ</مقطع>
  <مقطع رقم="٢١٧">فَتَقُوْلُ <قول رقم="٥٠">هُوَ أَكْثَرُ النَّاسِ مَالًا</قول>
  </مقطع>

  <رأس هو="٠">
    <عنوان>مجرى أَسْماءِ الْعَدَدِ</عنوان>
  </رأس>
  <مقطع رقم="٢١٨">وَمِمَّا أُجْرِيَ هٰذَا الْمُجْرَى أَسْمَاءُ الْعَدَدِ</مقطع>
  <مقطع رقم="٢١٩">تَقُوْلُ فِيْمَا كَانَ لِأَدْنَى الْعِدَّةِ</مقطع>
  <مقطع رقم="٢٢٠">بِالْإِضَافَةِ إِلَى مَا يُبْنَى لِجَمْعِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع رقم="٢٢١">إِلَى أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٢٢">وَتُدْخِلُ في الْمُضَافِ إِلَيْهِ الْأَلْفَ وَالَّلامَ</مقطع>
  <مقطع رقم="٢٢٣">لِأَنَّهُ يَكُوْنُ الْأَوَّلُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٢٤">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٢٥">
    <حرف>ثَلَاثَةُ أَبْوَابٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٦">
    <حرف>وَأَرْبَعَةُ أَنْفُسٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٧">وَ <حرف>أَرْبَعَةُ أَثْوَابٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٨">فِيْمَا بَيْنَكَ وَبَيْنَ الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٢٩">وَإِذَا أَدْخَلْتَ الْأَلْفَ وَاللَّامَ قُلْتَ</مقطع>
  <مقطع رقم="٢٣٠">
    <حرف>خَمْسَةُ الأَثْوَابِ</حرف> وَ<حرف>سِتَّةُ الْأَجْمَالِ</حرف>
  </مقطع>
  <مقطع رقم="٢٣١">فَلَا يَكُوْنُ هٰذَا أَبَدًا</مقطع>
  <مقطع رقم="٢٣٢">إِلَّا غَيْرَ مُنَوَّنٍ</مقطع>
  <مقطع رقم="٢٣٣">يَلْزَمُهُ أَمَرٌ وَاحِدٌ</مقطع>
  <مقطع رقم="٢٣٤">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٢٣٥">فَإِذَا زِدْتَ عَلَى الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٣٦">شَيْئًا مِنْ أَسْمَاءِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع رقم="٢٣٧">فَإِنَّهُ يُجْعَلُ مَعَ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٣٨">اسْمًا وَاحِدًا اسْتَحِفَافًا</مقطع>
  <مقطع رقم="٢٣٩">وَيَكُوْنُ في مَوْضِعِ اسْمٍ مُنَوَّنٍ</مقطع>
  <مقطع رقم="٢٤٠">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٤١">
    <حرف>أَحَدَ عَشَرَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٤٢">وَ <حرف>اثْنا عَشَرَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٤٣">وَ <حرف>إِحْدَى عَشْرَةَ جَارِيَةً</حرف>
  </مقطع>
  <مقطع رقم="٢٤٤">فَعَلَى هٰذَا يُجْرَى مِنْ الْوَاحِدِ إِلَى التِّسْعَةِ</مقطع>
  <مقطع رقم="٢٤٥">فَإِذَا ضَاعَفْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٤٦">كَانَ لَهُ اسْمٌ مِنْ لَفْظِهِ</مقطع>
  <مقطع رقم="٢٤٧">وَلَا يُثَنَّى الْعَقْدُ</مقطع>
  <مقطع رقم="٢٤٨">وَيُجْرَى ذٰلِكَ الْاسْمُ</مقطع>
  <مقطع رقم="٢٤٩">مُجْرَى الْوَاحِدِ</مقطع>
  <مقطع رقم="٢٥٠">الَّذِي لَحِقَتْهُ الزِيَادَةُ لِلْجَمْعِ</مقطع>
  <مقطع رقم="٢٥١">كَمَا لَحِقَتْهُ الزِّيَادَةُ لِلتَّثْنِيَةِ</مقطع>
  <مقطع رقم="٢٥٢">وَيَكُوْنُ حَرْفُ الْإِعْرَابِ الْوَاوَ وَالْيَاءَ</مقطع>
  <مقطع رقم="٢٥٣">وَبَعْدَهُمَا النُّوْنُ</مقطع>
  <مقطع رقم="٢٥٤">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٥٥">
    <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٥٦">فَإِنْ أَرَدْتَ أَنْ تَثَلِّثَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٥٧">كَانَ لَهُ اسْمٌ مِنْ لَفْظِ الثَّلاثَةِ</مقطع>
  <مقطع رقم="٢٥٨">يَجْرِي مَجْرَى الِاسْمِ</مقطع>
  <مقطع رقم="٢٥٩">الَّذِىْ كَانَ لِلتَّثْنِيَةِ</مقطع>
  <هارون مجلد="١" صفحة="٢٠٦"/>
  <مقطع رقم="٢٦٠">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٦١">
    <حرف>ثَلَاثُوْنَ عَبْدًا</حرف>
  </مقطع>
  <مقطع رقم="٢٦٢">وَكَذٰلِكَ إِلَى أَنْ تُتَسِّعَهُ</مقطع>
  <مقطع رقم="٢٦٣">وَتَكُوْنُ النُّوْنُ لَازَمَةً لَهُ</مقطع>
  <مقطع رقم="٢٦٤">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ لَازِمًا لِلثَّلاثَةِ إِلَى الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٦٥">وَإِنَّمَا فَعَلُوْا هٰذَا بِهَذِهِ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="٢٦٦">وَأَلْزَمُوْهَا وَجَهًا وَاحِدًا</مقطع>
  <مقطع رقم="٢٦٧">لِأَنَّهَا لَيْسَتْ كَالصِّفَةِ الَّتِي في مَعْنَى الْفِعْلِ</مقطع>
  <مقطع رقم="٢٦٨">وَلَا الَّتِي شُبِّهَتْ بِهَا</مقطع>
  <مقطع رقم="٢٦٩">فَلَمْ تَقْوَ تِلْكَ الْقُوَّةَ</مقطع>
  <مقطع رقم="٢٧٠">وَلَمْ يَجُزْ حِيْنَ جَاوَزْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٧١">فِيْمَا تُبَيِّنُ بِهِ مِنْ أَىِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع رقم="٢٧٢">إِلَّا أَنْ يَكُوْنَ لَفْظُهُ وَاحِدًا</مقطع>
  <مقطع رقم="٢٧٣">وَلَا تَكُوْنُ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٢٧٤">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٢٧٥">وَكَذٰلِكَ هُوَ إِلَى التِّسْعِيْنَ</مقطع>
  <مقطع رقم="٢٧٦">فِيْمَا يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="٢٧٧">وَيُبَيَّنُ بِهِ مِنْ أَيِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع رقم="٢٧٩">فَإِذَا بَلَغْتَ الْعَقْدَ الَّذِي يَلِيْهِ</مقطع>
  <مقطع رقم="٢٨٠">تَرَكْتَ التَّنْوِينَ وَالنُّوْنَ وَأَضَفْتَ</مقطع>
  <مقطع رقم="٢٨١">وَجَعَلْتَ الَّذِي يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="٢٨٢">وُيُبَّيَنُ بِهِ الْعَدَدُ مِنْ أَىِّ صِنْفٍ هُوَ</مقطع>
  <مقطع رقم="٢٨٣">وَاحِدًا</مقطع>
  <مقطع رقم="٢٨٤">كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَوَّنْتَ فِيْهِ</مقطع>
  <مقطع رقم="٢٨٥">إِلِّا أَنَّكَ تُدْخِلَ فِيْهِ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع رقم="٢٨٦">لِأَنَّ الْأَوَّلَ يَكُوْنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٨٧">وَلَا يَكُوْنُ الْمُنَوَّنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٨٨">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٨٩">
    <قول رقم="٥١">مِائَةُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٠">وَ<قول رقم="٥٢">مِائَةُ الدِّرْهَمِ</قول>
  </مقطع>
  <مقطع رقم="٢٩١">وَذٰلِكَ إِنْ ضَاعَفْتَهُ قُلْتَ</مقطع>
  <مقطع رقم="٢٩٢">
    <قول رقم="٥٣">مِائَتَا دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٣">وَ<قول رقم="٥٤">مِائَتَا الدِّيْنَارِ</قول>
  </مقطع>
  <مقطع رقم="٢٩٤">وَكَذٰلِكَ الْعَقْدُ الَّذِىْ بَعْدَهُ</مقطع>
  <مقطع رقم="٢٩٥">وَاحَدًا كَانَ أَوْ مُثَنًّى</مقطع>
  <مقطع رقم="٢٩٦">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٩٧">
    <قول رقم="٥٥">أَلْفُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٨">وَ<قول رقم="٥٦">أَلْفَا دِرْهَمٍ</قول>
  </مقطع>
  <هارون مجلد="١" صفحة="٢٠٧"/>
  <مقطع رقم="٢٩٩">وَقَدْ جَاءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="٣٠٠">بَعْضُ هٰذَا مُنَوَّنًا</مقطع>
  <مقطع رقم="٣٠١">قَالَ الْرُّبَيِّعُ بْنِ ضَبُعٍ الْفَزَارِىُّ</مقطع>
  <شاهدة رقم="١٥" xml:id="٤١-١٥">
    <بيت>
      <مصراع>إِذَا عَاشَ الْفَتَى <ثبات>مِائَتَيْنِ عَامًا</ثبات>
      </مصراع>
      <مصراع>فَقَدْ أَوْدَى الْمَسَرَّةُ وَالْفَتَاءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٠٢">وَقَالَ</مقطع>
  <شاهدة رقم="١٦" xml:id="٤١-١٦">
    <بيت>
      <مصراع>أَنْعَتُ عِيْرًا مِن حَمِيْرِ خَنْزَرَهْ</مصراع>
      <مصراع>في كُلَّ عِيْرٍ <ثبات>مِائَتَانِ كَمَرةً</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>

  <رأس هو="٠">
    <عنوان>صِنْفُ الْمِئَاتِ</عنوان>
  </رأس>
  <مقطع رقم="٣٠٣">وَأَمَّا ثَلٰثُمِائَةٍ إِلَى تِسْعمِائَةٍ</مقطع>
  <مقطع رقم="٣٠٤">فَكَانَ يَنْبَغِي أَنْ تَكُوْنَ في الْقِيَاسِ</مقطع>
  <مقطع رقم="٣٠٥">
    <حرف>مِئَتَيْنِ</حرف> أَوْ <حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٠٦">وَلَكِنَّهُمْ شَبَّهُوْهُ بِـ<حرف>عِشْرِيْنَ</حرف> وَ<حرف>أَحَدَ عَشَرَ</حرف>
  </مقطع>
  <مقطع رقم="٣٠٧">حَيْثُ جَعَلُوا مَا يُبَيَّنُ بِهِ الْعَدَدُ وَاحِدًا</مقطع>
  <مقطع رقم="٣٠٨">لِأَنَّهُ اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع رقم="٣٠٩">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع رقم="٣١٠">وَلَيْسَ بِمُسْتَنْكَرٍ في كَلَامِهِمْ</مقطع>
  <مقطع رقم="٣١١">أَنْ يَكُوْنَ اللَّفْظُ وَاحِدًا</مقطع>
  <مقطع رقم="٣١٢">وَالْمَعْنَى جَمِيْعٌ</مقطع>
  <مقطع رقم="٣١٣">حَتَّى قَالَ بَعْضُهُمْ في الشِّعْرِ مِنْ ذٰلِكَ</مقطع>
  <مقطع رقم="٣١٤">مَا لَا يُسْتَعْمَلُ في الْكَلَامِ</مقطع>
  <مقطع رقم="٣١٥">وَقَالَ عَلْقَمَةُ بِنُ عَبَدَةَ</مقطع>
  <شاهدة رقم="١٧" xml:id="٤١-١٧">
    <بيت>
      <مصراع>بِهَا جِيَفُ الْحَسْرَى فَأَمَّا عِظَامُهَا</مصراع>
      <مصراع>فَبِيْضٌ وَأَمَّا <ثبات>جِلْدُهَا</ثبات> فَصَلِيبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣١٦">وَقَالَ</مقطع>
  <شاهدة رقم="١٨" xml:id="٤١-١٨">
    <بيت>
      <مصراع>لَا تُنْكِرُوْا الْقَتْلَ وَقَدْ سُبِينًا</مصراع>
      <مصراع>في <ثبات>حَلْقِكُمْ</ثبات> عَظْمٌ وَقَدْ شَجِينًا</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٢٠٩"/>
  <مقطع رقم="٣١٧">فَاخْتُصَّ التَّثْلِيثُ بِهٰذَا الْبَابِ إِلَى تِسْعِمِائَةٍ</مقطع>

  <رأس هو="٠">
    <عنوان>لَدُنْ غُدْوَةً</عنوان>
  </رأس>
  <مقطع رقم="٣١٨">كَمَا أَنَّ <حرف>لَدُنْ</حرف> لَهَا في <حرف>غُدْوَةً</حرف> حَالٌ</مقطع>
  <مقطع رقم="٣١٩">لَيْسَتْ في غَيْرِهَا</مقطع>
  <مقطع رقم="٣٢٠">تُنْصَبُ بِهَا</مقطع>
  <مقطع رقم="٣٢١">كَأَنَّهُ أَلْحَقَ التَّنْوِينَ</مقطع>
  <مقطع رقم="٣٢٢">في لُغَةِ مَنْ قَالَ <حرف>لَدُ</حرف>
  </مقطع>
  <مقطع رقم="٣٢٣">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٣٢٤">
    <قول رقم="٥٧">مَنْ لَدُنْ غُدْوَةً</قول>
  </مقطع>
  <مقطع رقم="٣٢٥">وَقَالَ بَعْضُهُمْ</مقطع>
  <مقطع رقم="٣٢٦">
    <قول رقم="٥٨">لَدَا غَدْوَةً</قول>
  </مقطع>
  <مقطع رقم="٣٢٧">كَأَنَّهُ أَسْكَنَ الدَّالَّ</مقطع>
  <مقطع رقم="٣٢٨">ثُمَّ فَتَحَهَا</مقطع>
  <مقطع رقم="٣٢٩">كَمَا قَالَ <قول رقم="٥٩">اضْرِبَنْ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٣٠">فَفُتِحَ الْبَاءُ لَمَّا جَاءَ بِالنُّوْنِ الْخَفِيفَةِ</مقطع>
  <مقطع رقم="٣٣١">وَالْجَرُّ في <حرف>غُدْوَةٍ</حرف> هُوَ الْوَجْهُ وَالْقِيَاسُ</مقطع>
  <مقطع رقم="٣٣٢">وَتَكُوْنُ النُّوْنُ مِنْ نَفْسِ الْحَرْفِ</مقطع>
  <مقطع رقم="٣٣٣">بِمَنْزِلَةِ نُوْنِ <حرف>مِنْ</حرف> وَ<حرف>عَنْ</حرف>
  </مقطع>

  <رأس هو="٠">
    <عنوان>الشَّذُّ في بعض الكلام</عنوان>
  </رأس>
  <مقطع رقم="٣٣٤">فَقَدْ يَشَذُّ الشيءُ مِنْ كَلَامِهِمْ عَنْ نَظَائِرِهِ</مقطع>
  <مقطع رقم="٣٣٥">وَيَسْتَخِفُّوْنَ الشيءَ في مَوْضِعٍ وَ لَا يَسْتَخِفُّونَهُ في غَيْرِهِ</مقطع>
  <مقطع رقم="٣٣٦">وَذٰلِكَ قَوْلُهُمْ <قول رقم="٦٠">مَا شَعَرْتُ بِهِ شِعْرَةً</قول> وَ<قول رقم="٦١">لَيْتَ شِعْرِى</قول>
  </مقطع>
  <مقطع رقم="٣٣٧">وَيَقُوْلُوْنَ <حرف>الْعَمْرُ</حرف> وَ<حرف>الْعُمْرُ</حرف>
  </مقطع>
  <مقطع رقم="٣٣٨">لَا يَقُوْلُوْنَ في الْيَمِيْنِ إِلَّا بِالْفَتْحِ</مقطع>
  <مقطع رقم="٣٣٩">يَقُوْلُوْنَ كُلُّهُمْ <حرف>لَعَمْرُكَ</حرف>
  </مقطع>
  <مقطع رقم="٣٤٠">وَسَتَرَى أَشْبَاهَ هٰذَا أَيْضًا في كَلَامِهِمْ إِنْ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٣٤١">وَمِمَّا جَاءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="٣٤٢">عَلَى لَفْظِ الْوَاحِدِ يُرَادُ بِهِ الْجَمِيْعُ</مقطع>
  <شاهدة رقم="١٩" xml:id="٤١-١٩">
    <بيت>
      <مصراع>كُلُوْا في بَعْضِ بَطْنِكُمُ تَعِفُّوا</مصراع>
      <مصراع>فَإِنَّ زَمَانَكُمْ زَمَنٌ خَمِيْصُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٤٣">وَمِثْلُ ذٰلِكَ في الْكَلَامِ قَوْلُهُ تَبَارَكَ وَتَعَالَى</مقطع>
  <مقطع رقم="٣٤٤">
    <آية>فَإِنْ طِبْنَ لَكُمْ عَنْ شئٌ مِنْهُ نَفْسًا</آية>
  </مقطع>
  <مقطع رقم="٣٤٥">وَقَرَرْنَا بِهِ عَيْنًا وَإِنْ شِئْتَ قُلْتُ <حرف>أَعْيُنًا</حرف> وَ<حرف>أَنْفُسًا</حرف>
  </مقطع>
  <هارون مجلد="١" صفحة="٢١٠"/>
  <مقطع رقم="٣٤٦">كَمَا قُلْتَ <حرف>ثَلَثِمِائَةٍ</حرف> وَ<حرف>ثَلَاثِ مِئِيْنَ</حرف> وَ<حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٤٧">وَلَمْ يُدْخِلُوَا الْأَلِفَ وَاللَّامَ كَمَا لَمْ يُدْخِلُوَا في <قول رقم="٦٢">امْتَلَأَتُ مَاءً</قول>
  </مقطع>
