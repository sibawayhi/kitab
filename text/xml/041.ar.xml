    <!-- </وحدة> -->
    <!-- <وحدة> -->
    <مقطع هوية='٢٧١١٦'>وَهُوَ مِنْ سَبَبِ الْأَوَّلِ</مقطع>
    <مقطع هوية='٦٧٠٢١'>كَمَا أَنَّهُ مِن سَبَبِهِ بِالْأَلِفِ وَاللَّامِ</مقطع>
