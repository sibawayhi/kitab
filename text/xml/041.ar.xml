<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٩"
     درنبورج="١-٨١"
     البكاء="١-٢٦٨"
     هارون="١-١٩٤"
     يعقوب="١-٢٥٦"
     رقم="٤١">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الصِّفَةِ الْمُشَبَّهَةِ بِالْفَاْعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">وَلَمْ تَقْوَ أَنْ تَعْمَلَ عَمَلَ الْفَاْعِلِ</مقطع>
  <مقطع رقم="٣">لِأَنَّهَا لَيْسَتْ في مَعْنَى الْفِعْلِ الْمُضَاْرِعِ</مقطع>
  <مقطع رقم="٤">فَإِنَّمَا شُبِّهَتْ بِالْفَاْعِلِ فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
  <مقطع رقم="٥">وَمَا تَعْمَلُ فِيْهِ مَعْلُوْمٌ</مقطع>
  <مقطع رقم="٦">إِنَّمَا تَعْمَلُ فِيْمَا كَاْنَ مِنْ سَبَبِهَا</مقطع>
  <مقطع رقم="٧">مُعَرَّفًا بِالْأَلِفِ وَاللَّامِ أَوْ نَكِرَةً</مقطع>
  <مقطع رقم="٨">لَا تُجَاوِزُ هٰذَا</مقطع>
  <مقطع رقم="٩">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا اسْمٍ هُوَ في مَعْنَاْهُ</مقطع>
  <رأس هو="٠">
    <عنوان>الإضافة في الصِّفة المُشَبَّهَة</عنوان>
  </رأس>
  <مقطع رقم="١٠">وَالْإِضَاْفَةُ فِيْهِ أَحَْسَنُ وَأَكْثَرُ</مقطع>
  <مقطع رقم="١١">لِأَنَّهُ لَيْسَ كَمَا جَرَى مَجْرَى الْفِعْلِ وَلَا في مَعْنَاْهُ</مقطع>
  <مقطع رقم="١٢">فَكَانَ أَحْسَنَ عِنْدَهُمْ أَنْ يَتَبَاْعَدَ مِنْهُ في اللَّفْظِ</مقطع>
  <مقطع رقم="١٣">كَمَا أَنَّهُ لَيْسَ مِثْلَهُ في الْمَعْنَى وَفِي قُوَّتِهِ في الْأَشْيَاْءِ</مقطع>
  <مقطع رقم="١٤">وَالتَّنْوِيْنُ عَرَبِىٌّ جَيِّدٌ</مقطع>
  <مقطع رقم="١٥">وَمَعَ هٰذَا أَنَّهُمْ لَوْ تَرَكُوا التَّنْوِينَ أَوِ النُّوْنَ</مقطع>
  <مقطع رقم="١٦">لَمْ يَكُنْ أَبَدًا إِلَّا نَكِرَةً عَلَى حَاْلِهِ مِنَوَّنًا</مقطع>
  <مقطع رقم="١٧">فَلَمَّا كَانَ تَرْكُ التَّنْوِيْنِ فِيْهِ وَالْنُّوْنُ</مقطع>
  <مقطع رقم="١٨">لَا يُجَاوَزُ بِهِ مَعْنَى النُّوْنِ وَالتَّنْوْيِنِ</مقطع>
  <مقطع رقم="١٩">كَانَ تَرْكُهُمَا أَخَفَّ عَلَيْهِمْ</مقطع>
  <مقطع رقم="٢٠">فَهٰذَا يُقَوِّي أَنَّ الْإِضَاْفَةَ أَحْسَنُ مَعَ التَّفْسِيْرِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢١">فَالْمُضَاْفُ قَوْلُكَ <قول رقم="١" مثال="١">هٰذَا حَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٢٢">وَ<قول رقم="٢" مثال="١">هَذِهِ حَسَنَةُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٢٣">فَالصِّفَةُ تَقَعُ عَلَى الِاسْمِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٢٤">ثُمَّ تُوْصِلُهُا إِلَى <حرف>الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٢٥">وَإِلَى كُلِّ شَيءٍ مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="٢٦">عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٢٧">كَمَا تَقُوْلُ</مقطع>
  <مقطع رقم="٢٨">
    <قول رقم="٣" مثال="١">هٰذَا ضَارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٢٩">وَ<قول رقم="٤" مثال="١">هَذِهِ ضَارِبَةُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="٣٠">إِلَّا أَنَّ الْحُسْنَ في الْمَعْنَى لِلْوَجْهِ</مقطع>
  <مقطع رقم="٣١">وَالضَّرْبُ هٰهُنَا لِلْأَوَّلِ</مقطع>
  <مقطع رقم="٣٢">وَمِنْ ذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="٣٣">
    <قول رقم="٥" مثال="١">هُوَ أَحْمَرُ بَيْنِ الْعَيْنَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَ<قول رقم="٦" مثال="١">هُوَ جَيِّدُ وَجْهِ الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٣٥">وَمِمَّا جَاْءَ مُنَوَّنًا قَوْلُ <شاعر>زُهَيْرٍ</شاعر>
  </مقطع>
  <شاهدة مقطع="٣٦" رقم="١">
    <بيت>
      <مصراع>أَهْوَى لَهَا أَسْفَعُ الْخَدَّيْنِ <ثبات>مُطَّرِقٌ</ثبات>
      </مصراع>
      <مصراع>
      <ثبات>رِيْشَ</ثبات> الْقَوَادِمِ لَمْ تُنْصَبْ لَهُ الشَّبَكُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٧">وَقَاْلَ <شاعر>الْعَجَّاْجُ</شاعر>
  </مقطع>
  <شاهدة مقطع="٣٨" رقم="٢">
    <بيت>
      <مصراع>مُحْتَبِكٌ <ثبات>ضَخْمٌ شُئُوْنَ</ثبات> الرَّأْسِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٩">وَقَالَ أَيْضًا <شاعر>النَّابِغَةُ</شاعر>
  </مقطع>
  <شاهدة مقطع="٤٠" رقم="٣">
    <بيت>
      <مصراع>وَنَأْخُذْ بَعْدَهُ بِذِنَاْبِ عَيْشٍ</مصراع>
      <مصراع>
      <ثبات>أَجَبَّ الظَّهْرَ</ثبات> لَيْسَ لَهُ سَنَاْمُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤١">وَهُوَ في الشِّعْرِ كَثِيْرٌ</مقطع>
  <مقطع رقم="٤٢">وَاعْلَمْ أَنَّ كَيْنُوْنَةَ الْأَلِفِ وَاللَّامِ في الِاسْمِ الْآخِرِ</مقطع>
  <مقطع رقم="٤٣">أَكْثَرُ وَأَحْسَنُ مِنْ أَنْ لَا تَكُوْنَ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٤٤">لِأَنَّ الْأَوَّلَ في الْأَلِفِ وَاللَّامِ وَفي غَيْرِهِمَا هٰهُنَا عَلَى حَالَةٍ وَاحِدَةٍ</مقطع>
  <مقطع رقم="٤٥">وَلَيْسَ كَالْفَاعِلِ</مقطع>
  <مقطع رقم="٤٦">فَكَانَ إِدْخَالُهُمَا أَحْسَنَ وَأَكْثَرَ</مقطع>
  <مقطع رقم="٤٧">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ أَكْثَرَ</مقطع>
  <مقطع رقم="٤٨">وَكَانَ الْأَلِفُ وَاللَّامُ أَوْلَى</مقطع>
  <مقطع رقم="٤٩">لِأَنَّ مَعْنَاهُ <حرف>حَسَنٌ وَجْهُهُ</حرف>
  </مقطع>
  <مقطع رقم="٥٠">فَكَمَا لَا يَكُوْنُ <حرف>هٰذَا</حرف> إِلَّا مَعْرِفَةً</مقطع>
  <مقطع رقم="٥١">اِخْتَارُوْا في ذٰلِكَ الْمَعْرِفَةَ</مقطع>
  <مقطع رقم="٥٢">وَالْأُخْرَى عَرَبِيَّةٌ</مقطع>
  <مقطع رقم="٥٣">كَمَا أَنَّ التَّنْوِينَ وَالنُّوْنَ عَرَبِىٌّ مُطَّرِدٌ</مقطع>
  <مقطع رقم="٥٤">فَمِنْ ذٰلِكَ قَوْلُهُ <قول رقم="٧" مثال="١">هُوَ حَدِيْثُ عَهْدٍ بِالْوَجَعِ</قول>
  </مقطع>
  <مقطع رقم="٥٥">وَقَاْلَ عَمْرُو بْنُ شَأْسٍ</مقطع>
  <شاهدة مقطع="٥٦" رقم="٤">
    <بيت>
      <مصراع>أَلِكْنِي إِلَى قَوْمِي السَّلامَ رِسَاْلَةً</مصراع>
      <مصراع>بِآيَةِ مَا كَاْنُوْا ضِعَاْفًا وَلَا عُزْلَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَلَا سَيِّئِي زِيٍّ إِذَا مَا تَلَبَّسُوْا</مصراع>
      <مصراع>إِلَى حَاْجَةٍ يَوْمًا مُخَيَّسَةً بُزْلَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٧">وَقَالَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
  <شاهدة مقطع="٥٨" رقم="٥">
    <بيت>
      <مصراع>لَاحِقُ بَطْنِ بِقَرًا سَمِيْنِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٩">وَمِمَّا جَاءَ مُنَوَّنًا قَوْلُ <شاعر>أَبِي زُبَيْدٍ</شاعر> يَصِفُ الْأَسَدَ</مقطع>
  <شاهدة مقطع="٦٠" رقم="٦">
    <بيت>
      <مصراع>كَأَنَّ أَثْوَاْبَ نَقّاْدٍ قُدِرْنَ لَهُ</مصراع>
      <مصراع>يَعْلُو بِخَمْلَتِها <ثبات>كَهْبَاءَ هُدَّابَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦١">وَقَالَ أَيْضًا</مقطع>
  <شاهدة مقطع="٦٢" رقم="٧">
    <بيت>
      <مصراع>هَيْفَاءُ مُقْبِلَةً عَجْزَاءُ مُدْبِرَةً</مصراع>
      <مصراع>مَحْطُوْطَةٌ جُدِلَتْ <ثبات>شَنْبَاءُ أَنْيَابَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٣">وَقَالَ عَدِيُّ بْنُ زَيْدٍ</مقطع>
  <شاهدة مقطع="٦٤" رقم="٨">
    <بيت>
      <مصراع>مِنْ حَبِيْبٍ أَوْ أَخِي ثِقَةٍ</مصراع>
      <مصراع>أَوْ عَدُوٍّ <ثبات>شَاْحِطٍ دَاْرَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٥">وَقَدْ جَاْءَ في الشِّعْرِ <حرف>حَسَنَةُ وَجْهِهَا</حرف>
  </مقطع>
  <مقطع رقم="٦٦">شَبَّهُوْهُ بِـ<حرف>حَسَنَةِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٦٧">وَذٰلِكَ رَدِيْءٌ</مقطع>
  <قائمة>
    <وحدة>
      <مقطع رقم="٦٨">لِأَنَّهُ بِالْهَاءِ مَعْرِفَةٌ كَمَا كَانَ بِالْأَلِفِ وَاللَّامِ</مقطع>
    </وحدة>
    <وحدة>
      <مقطع رقم="٦٩">وَهُوَ مِنْ سَبَبِ الْأَوَّلِ كَمَا أَنَّهُ مِن سَبَبِهِ بِالْأَلِفِ وَاللَّامِ</مقطع>
    </وحدة>
  </قائمة>
  <مقطع رقم="٧٠">قَالَ الشَّمَّاْخُ</مقطع>
  <شاهدة مقطع="٧١" رقم="٩">
    <بيت>
      <مصراع>أَمِنْ دِمْنَتَيْنِ عَرَّسَ الرَّكْبُ فِيْهِمَا</مصراع>
      <مصراع>بِحَقْلِ الرُّخَاْمَى قَدْ عَفَا طَلَلَاهُمَا</مصراع>
    </بيت>
    <بيت>
      <مصراع>أَقَاْمَتْ عَلَى رَبْعَيْهِمَا <ثبات>جَارَتَا صَفًا</ثبات>
      </مصراع>
      <مصراع>كُمَيْتَا الْأَعَاْلِي <ثبات>جَوْنَتَا مُصْطَلَاهُمَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <رأس هو="٠">
    <عنوان>دُخُولُ الأَلِفِ وَالَّامِ في الْمُضَاْفِ</عنوان>
  </رأس>
  <مقطع رقم="٧٢">وَاعْلَمْ أَنَّهُ لَيْسَ في الْعَرَبِيَّةِ</مقطع>
  <مقطع رقم="٧٣">مُضَاْفٌ يَدْخُلُ عَلَيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٧٤">غَيْرُ الْمُضَاْفِ إِلَى الْمَعْرِفَةِ في هٰذَا الْبَاْبِ</مقطع>
  <مقطع رقم="٧٥">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٧٦">
    <قول رقم="٨" مثال="١">هٰذَا الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="٧٧">أَدْخَلُوْا الْأَلِفَ وَاللَّامَ عَلَى <حرف>حَسَنِ الْوَجْهِ</حرف>
  </مقطع>
  <مقطع رقم="٧٨">لِأَنَّهُ مُضَاْفٌ إِلَى مَعْرِفَةٍ</مقطع>
  <مقطع رقم="٧٩">لَا يُكُوْنُ بِهَا مَعْرِفَةً أَبَدًا</مقطع>
  <مقطع رقم="٨٠">فَاحْتَاْجَ إِلَى ذٰلِكَ</مقطع>
  <مقطع رقم="٨١">حَيْثُ مُنِعَ مَا يَكُوْنُ في مِثْلِهِ الْبَتَّةَ</مقطع>
  <مقطع رقم="٨٢">وَلَا يُجَاوَزُ بِهِ مَعْنَى التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٨٣">فَأَمَّا النَّكِرَةُ فَلَا يَكُوْنُ فِيْهَا إِلَّا <حرف>الْحَسَنُ وَجْهًا</حرف>
  </مقطع>
  <مقطع رقم="٨٤">تَكُوْنُ الْأَلِفُ وَاللَّامُ بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٨٥">لِأَنَّكَ لَوْ قُلْتَ <حرف>حَدِيْثُ عَهْدٍ</حرف> أَوْ <حرف>كَرِيْمُ أَبٍ</حرف>
  </مقطع>
  <مقطع رقم="٨٦">لَمْ تُخْلِلْ بِالْأَوَّلِ في شَيءٍ</مقطع>
  <مقطع رقم="٨٧">فَتُحْتَمَلَ لَهُ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٨٨">لِأَنَّهُ عَلَى مَا يَنْبَغِي أَنْ يَكُوْنَ عَلَيْهِ</مقطع>
  <مقطع رقم="٨٩">قَالَ رُؤْبَةُ</مقطع>
  <شاهدة مقطع="٩٠" رقم="١٠">
    <بيت>
      <مصراع>
        <ثبات>الْحَزْنُ بَاْبًا</ثبات> وَ<ثبات>الْعَقُوْرُ كَلْبًا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٩١">وَزَعَمَ أَبُوْ الْخَطَّاْبِ أَنَّهُ سَمِعَ قَوْمًا مِنْ الْعَرَبِ يُنْشِدُوْنَ هٰذَا الْبَيْتَ لِـ<شاعر>ـلْحَارِثِ ابْنِ ظَالِمٍ</شاعر>
  </مقطع>
  <شاهدة مقطع="٩٢" رقم="١١">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الشُّعْرَى رِقَاْبَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٩٣">فَإِنَّمَا أُدْخِلَتْ الْأَلِفُ وَاللَّامُ في الْـ<حرف>حَسَنِ</حرف>
  </مقطع>
  <مقطع رقم="٩٤">ثُمَّ أَعْمَلْتَهُ</مقطع>
  <مقطع رقم="٩٥">كَمَا قَاْلَ <قول رقم="٩">الضَّاْرِبُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٩٦">وَعَلَىَ هٰذَا الْوَجْهِ تَقُوْلُ <قول رقم="١٠" مثال="١">هُوَ الْحَسَنُ الْوَجْهَ</قول>
  </مقطع>
  <مقطع رقم="٩٧">وَهِىَ عَرَبِيَّةٌ جَيِّدَةٌ</مقطع>
  <مقطع رقم="٩٨">قَاْلَ الشَّاْعِرُ</مقطع>
  <شاهدة مقطع="٩٩" رقم="١٢">
    <بيت>
      <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
      <مصراع>وَلَا بِفَزَارَةَ <ثبات>الشُّعْرِ الرِّقَابَا</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١٠٠">وَقَدْ يَجُوْزُ في هٰذَا</مقطع>
  <مقطع رقم="١٠١">أَنْ تَقُوْلَ <قول رقم="١١" مثال="١">هُوَ الْحَسَنُ الْوَجْهِ</قول>
  </مقطع>
  <مقطع رقم="١٠٢">عَلَى قَوْلِهِ <قول رقم="١٢">هُوَ الضَّارِبُ الرَّجُلِ</قول>
  </مقطع>
  <مقطع رقم="١٠٣">فَالْجَّرُ في هٰذَا الْبَاْبِ مِنْ وَجْهَيْنِ</مقطع>
  <مقطع رقم="١٠٤">مِنَ البَاْبِ الَّذِي هُوَ لَهُ وَهُوَ الْإِضَاْفَةُ</مقطع>
  <مقطع رقم="١٠٥">وَمِنْ إِعْمَاْلِ الْفِعْلِ ثُمَّ يُسْتَخَفُّ فَيُضَاْفُ</مقطع>
  <مقطع رقم="١٠٦">فَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ فَأَثْبَتَّ النُّوْنَ فَلَيْسَ إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="١٠٧">وَذٰلِكَ قَوْلُهُمْ</مقطع>
  <مقطع رقم="١٠٨">
    <قول رقم="١٣" مثال="١">هُمُ الطَّيِّبُوْنَ الْأَخْبَاْرَ</قول>
  </مقطع>
  <مقطع رقم="١٠٩">وَ<قول رقم="١٤" مثال="١">هُمَا الْحَسَنَاْنِ الْوُجُوْهَ</قول>
  </مقطع>
  <مقطع رقم="١١٠">وَمِنْ ذٰلِكَ قَوْلُهُ تَعَاْلَى</مقطع>
  <مقطع رقم="١١١">
    <آية سورة="١٨" آية="١٠٣">قُلْ هَلْ نُنَبِّئُكُمْ بِالْأَخْسَرِيْنَ أَعْمَاْلًا</آية>
  </مقطع>
  <مقطع رقم="١١٢">وَقَاْلَتْ خِرْنِقُ مِنْ بَنِي قَيْسٍ</مقطع>
  <شاهدة مقطع="١١٣" رقم="١٣">
    <بيت>
      <مصراع>لَا يَبْعَدَنْ قَوْمِي الَّذِيْنَ هُمُ</مصراع>
      <مصراع>سَمُّ الْعُدَاْةِ وَآفَةُ الْجُزْرِ</مصراع>
    </بيت>
    <بيت>
      <مصراع>النَّاْزِلُوْنَ بِكُلِّ مُعْتَرَكٍ</مصراع>
      <مصراع>وَ<ثبات>الطَّيِّبُوْنَ مَعَاْقِدَ الْأَزْرِ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="١١٤">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
  <مقطع رقم="١١٥">كَاْنَ الْمَعْمُوْلُ فِيْهِ نَكِرَةً أَوْ فِيْهِ أَلِفٌ وَلَامٌ</مقطع>
  <مقطع رقم="١١٦">كَمَا قُلْتَ <قول رقم="١٥" مثال="١">هَؤُلَاءِ الضَارْبُو زَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١١٧">وَذٰلِكَ قَوْلُهُمْ <قول رقم="١٦" مثال="١">هُمُ الطَّيِّبُو أَخْبَاْرٍ</قول>
  </مقطع>
  <مقطع رقم="١١٨">وَإِنْ شِئْتَ نَصَبْتَ عَلَى قَوْلِهِ</مقطع>
  <شاهدة مقطع="١١٩" رقم="١٤">
    <بيت>
      <مصراع>
      <ثبات>الْحَاْفِظُو عَوْرَةَ</ثبات> الْعَشِيرَةِ</مصراع>
    </بيت>
  </شاهدة>
  <رأس هو="٠">
    <عنوان>الْفَصْلُ وَإثْباتُ التَّنْوِيْنِ</عنوان>
  </رأس>
  <مقطع رقم="١٢٠">وَتَقُوْلُ فِيْمَا لَا يَقَعُ إِلَّا مُنَوَّنًا عَامِلًا في نَكِرَةٍ</مقطع>
  <مقطع رقم="١٢١">وَإِنَّمَا وَقَعَ مُنَوَّنًا لِأَنَّهُ فُصِلَ فِيْهِ بَيْنَ الْعَامِلِ وَالْمَعْمُوْلِ</مقطع>
  <مقطع رقم="١٢٢">فَالْفَصْلُ لَازَمٌ لَهُ أَبَدًا مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
  <مقطع رقم="١٢٣">وَذٰلِكَ قَوْلُكَ <قول رقم="١٧" مثال="١">هُوَ خَيْرٌ مِنْكَ أَبًا</قول>
  </مقطع>
  <مقطع رقم="١٢٤">وَ<قول رقم="١٨" مثال="١">هُوَ أَحْسَنُ مِنْكَ وَجْهًا</قول>
  </مقطع>
  <مقطع رقم="١٢٥">وَلَا يَكُوْنُ الْمَعْمُوْلُ فِيْهِ إِلَّا مِنْ سَبَبِهِ</مقطع>
  <مقطع رقم="١٢٦">وَإِنْ شِئْتَ قُلْتَ <قول رقم="١٩" مثال="١">هُوَ خَيْرٌ عَمَلًا</قول>
  </مقطع>
  <مقطع رقم="١٢٧">وَأَنْتَ تَنْوِي <حرف>مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="١٢٨">وَإِنْ شِئْتَ أَخَّرْتَ الْفَصْلَ في اللَّفْظِ وَأَصْلُهُ التَّقْدِيْمُ</مقطع>
  <مقطع رقم="١٢٩">لِأَنَّهُ لَا يَمْنَعُهُ تَأْخِيْرُهُ عَمَلَهُ مُقَدَّمًا</مقطع>
  <مقطع رقم="١٣٠">كَمَا قَالَ <قول رقم="٢٠">ضَرَبَ زَيْدًا عَمْرٌو</قول>
  </مقطع>
  <مقطع رقم="١٣١">فَـ<حرف>عَمَرٌو</حرف> مُؤَخَّرٌ في اللَّفْظِ مَبْدُوءٌ بِهِ في الْمَعْنَى</مقطع>
  <مقطع رقم="١٣٢">وَهٰذَا مَبْدُوءٌ بِهِ</مقطع>
  <مقطع رقم="١٣٣">في أَنَّهُ يُثْبِتُ التَّنْوِينَ ثُمَّ يُعْمِلُ</مقطع>
  <مقطع رقم="١٣٤">وَلَا يَعْمَلُ إِلَّا في نَكِرَةٍ كَمَا أَنَّهُ لَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="١٣٥">وَلَا يَقْوَى قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٣٦">فَأَلْزَمَ فِيْهِ وَفِيْمَا يَعْمَلُ فِيْهِ وَجَهًا وَاْحِدًا</مقطع>
  <مقطع رقم="١٣٧">وَيَعْمَلُ في الْجَمْعِ كَقَوْلِهِمْ</مقطع>
  <مقطع رقم="١٣٨">
    <قول رقم="٢١" مثال="١">هُوَ خَيْرٌ مِنْكَ أَعْمَاْلًا</قول>
  </مقطع>
  <مقطع رقم="١٣٩">فَإِنْ أَضَفْتَ فَقُلْتَ <قول رقم="٢٢" مثال="١">هٰذَا أَوَّلُ رَجُلٍ</قول>
  </مقطع>
  <مقطع رقم="١٤٠">اجْتَمَعَ فِيْهِ لُزُوْمُ النَّكِرَةِ</مقطع>
  <مقطع رقم="١٤١">وَأَنْ يُلْفَظَ بِوَاْحِدٍ وَهُوَ يُرِيْدُ الْجَمْعَ</مقطع>
  <مقطع رقم="١٤٢">وَذٰلِكَ لِأِنَّهُ أَرَاْدَ أَنْ يَقُوْلَ <قول رقم="٢٣">
  <تقدير>هٰذا</تقدير> أَوَّلُ الرِّجَاْلِ</قول>
  </مقطع>
  <مقطع رقم="١٤٣">فَحَذَفَ اسْتِخْفَاْفًا وَاخْتِصَاْرًا</مقطع>
  <مقطع رقم="١٤٤">كَمَا قَاْلُوْا <حرف>كُلُّ رَجُلٍ</حرف> يُرِيْدُوْنَ <حرف>كُلُّ الرِّجَاْلِ</حرف>
  </مقطع>
  <مقطع رقم="١٤٥">فَكَمَا اسْتَخَفُّوْا بِحَذْفِ الْأَلِفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٤٦">اسْتَخَفُّوْا بِتَرْكِ بِنَاْءِ الْجَمِيْعِ</مقطع>
  <مقطع رقم="١٤٧">وَاسْتَغْنَوْا عَنْ الْأَلْفِ وَاللَّامِ</مقطع>
  <مقطع رقم="١٤٨">وَعَنْ قَوْلِهِمْ <قول رقم="٢٤">خَيْرُ الرِّجَاْلِ</قول> وَ<قول رقم="٢٥">أَوَّلُ الرِّجَاْلِ</قول>
  </مقطع>
  <مقطع رقم="١٤٩">وَمِثْلُ ذٰلِكَ في تَرْكِ الْأَلِفِ وَاللَّامِ وَبِنَاْءِ الْجَمِيْعِ</مقطع>
  <مقطع رقم="١٥٠">قَوْلُهُمْ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="١٥١">إِنَّمَا أَرَادُوْا <حرف>عِشْرِيْنَ مِنَ الدَّرَاهِمِ</حرف>
  </مقطع>
  <مقطع رقم="١٥٢">فَاخْتَصَرُوْا وَاسْتَخَفُّوْا</مقطع>
  <مقطع رقم="١٥٣">وَلَمْ يَكُنْ دُخُوْلُ الْأَلِفِ وَاللَّامِ يُغَيِّرُ الْـ<حرف>عِشْرِيْنَ</حرف> عَنْ نَكِرَتِهِ</مقطع>
  <مقطع رقم="١٥٤">فَاسْتَخَفُّوْا بِتَرْكِ مَا لَمْ يُحْتَجْ إِلَيْهِ</مقطع>
  <رأس هو="٠">
    <عنوان>؟</عنوان>
  </رأس>
  <مقطع رقم="١٥٥">وَلَمْ تَقْوَ هَذِهِ الْأَحْرُفُ قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٥٦">أَلَا تَرَى أَنَّكَ تُؤَنِّثُهَا وَتَذَكِّرُهَا وَتَجْمَعُهَا كَالْفَاعِلِ</مقطع>
  <مقطع رقم="١٥٧">تَقُوْلُ <قول رقم="٢٦" مثال="١">مَرَرْتُ بِرَجُلٍ حَسَنِ الْوَجْهِ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٥٨">كَمَا تَقُوْلُ <قول رقم="٢٧">مَرَرْتُ بِرَجُلٍ حَسَنٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٥٩">وَهُوَ مِثْلُ قَوْلِكَ <قول رقم="٢٨">مَرَرْتُ بِرَجُلٍ ضَارِبٍ أَبُوْهُ</قول>
  </مقطع>
  <مقطع رقم="١٦٠">فَإِنْ جِئْتَ بِـ<حرف>خَيْرٍ مِنْكَ</حرف> أَوْ <حرف>عِشْرِيْنَ</حرف> رَفَعْتَ</مقطع>
  <مقطع رقم="١٦١">لِأَنَّهَا مُلْحَقَةٌ بِالْأَسْمَاءِ لَا تَعْمَلُ عَمَلَ الْفِعْلِ</مقطع>
  <مقطع رقم="١٦٢">فَلَمْ تَقْوَ قُوَّةَ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٦٣">كَمَا لَمْ تَقْوَ الْمُشَبَّهَةُ قُوَّةَ مَا جَرَى مَجْرَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٦٤">وَتَقُوْلُ <قول رقم="٢٩" مثال="١">هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="١٦٥">وَ<قول رقم="٣٠">
  <تقدير>هُوَ</تقدير> أَفْرَهُ عَبْدٍ في النَّاسِ</قول>
  </مقطع>
  <مقطع رقم="١٦٦">لِأَنَّ الْفَارِهَ هُوَ الْعَبْدُ</مقطع>
  <مقطع رقم="١٦٧">وَلَمْ تُلْقِ <حرف>أَفْرَهَ</حرف> وَلَا <حرف>خَيْرًا</حرف> عَلَى غَيْرِهِ</مقطع>
  <مقطع رقم="١٦٨">ثُمَّ تَخْتَصُّ شَيْئًا</مقطع>
  <مقطع رقم="١٦٩">فَالْمَعْنَى مُخْتَلِفٌ</مقطع>
  <مقطع رقم="١٧٠">وَلَيْسَ هُنَا فَصْلٌ</مقطع>
  <مقطع رقم="١٧١">وَلَمْ يَلْزَمْ إِلِّا تَرْكُ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="١٧٢">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> وَ<حرف>خَيْرًا مِنْكَ</حرف>
  </مقطع>
  <مقطع رقم="١٧٣">لَمْ يَلْزَمْ فِيْهِ إِلَا التَّنْوِيْنُ</مقطع>
  <مقطع رقم="١٧٤">وَلَمْ يُدْخِلُوْا الْأَلْفَ وَاللَّامَ</مقطع>
  <مقطع رقم="١٧٥">كَمَا لَمْ يُدْخِلُوْهُ في الْأَوَّلِ</مقطع>
  <مقطع رقم="١٧٦">وَتَفْسِيْرُهُ تَفْسِيْرُ الْأَوَّلُ</مقطع>
  <مقطع رقم="١٧٧">وَإِنَّمَا أَرَادُوْا <حرف>أَفْرَهَ الْعَبِيْدِ</حرف>
  </مقطع>
  <مقطع رقم="١٧٨">وَ <حرف>خَيْرَ الْأَعْمَالِ</حرف>
  </مقطع>
  <مقطع رقم="١٧٩">وَإِنَّمَا أَثْبَتُوْا الْأَلْفَ وَاللَّامَ في قَوْلِهِمْ <حرف>أَفْضَلُ النَّاسِ</حرف>
  </مقطع>
  <مقطع رقم="١٨٠">لِأَنَّ الْأَوَّلَ قَدْ يَصْيِرُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="١٨١">فَأَثْبَتُوْا الْأَلِفَ وَاللَّامَ وَبِنَاءَ الْجَمِيْعِ وَلَمْ يُنَوَّنْ</مقطع>
  <مقطع رقم="١٨٢">وَفَرَقُوْا بِتَرْكِ النُّوْنِ وَالتَّنْوْيِنِ بَيْنَ مَعْنَيَيْنِ</مقطع>
  <رأس هو="٠">
    <عنوان>امْتَلَأَتُ مَاءً</عنوان>
  </رأس>
  <مقطع رقم="١٨٣">وَقَدْ جَاْءَ مِنْ الْفِعْلِ مَا قَدْ أُنْفِذَ إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٨٤">وَلَمْ يَقْوَ قُوَّةَ غَيْرِهِ مِمَّا قَدْ تَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٨٥">وَذٰلِكَ قَوْلُكَ <قول رقم="٣١" مثال="١">امْتَلَأْتُ مَاْءً</قول>
  </مقطع>
  <مقطع رقم="١٨٦">وَ<قول رقم="٣٢" مثال="١">تَفَقَّأْتُ شَحْمًا</قول>
  </مقطع>
  <مقطع رقم="١٨٧">وَلَا تَقُوْلُ <حرف>امْتَلَأْتُهُ</حرف> وَلَا <حرف>تَفَقَّأْتُهُ</حرف>
  </مقطع>
  <مقطع رقم="١٨٨">وَلَا يَعْمَلُ في غَيْرِهِ مِنَ الْمَعَاْرِفِ</مقطع>
  <مقطع رقم="١٨٩">وَلَا يُقَدَّمُ الْمَفْعُوْلُ فِيْهِ فَتَقُوْلَ <قول رقم="٣٣">مَاْءً امْتَلَأْتُ</قول>
  </مقطع>
  <مقطع رقم="١٩٠">كَمَا لَا يُقَدَّمُ الْمَفْعُوْلُ فِيْهِ فِي الصِّفِةِ الْمُشَبَّهَةِ</مقطع>
  <مقطع رقم="١٩١">وَلَا في هَذِهِ الْأَسْمَاءِ لِأَنَّهَا لَيْسَتْ كَالْفَاعِلِ</مقطع>
  <مقطع رقم="١٩٢">وَذٰلِكَ لِأَنَّهُ فِعْلٌ لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٩٣">وَإِنَّمَا هُوَ بِمَنْزِلَةِ الانْفِعَالِ لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
  <مقطع رقم="١٩٤">نَحْوُ <قول رقم="٣٤">كَسَرْتُهُ فَانْكَسَرَ</قول>
  </مقطع>
  <مقطع رقم="١٩٥">وَ<قول رقم="٣٥">دَفَعْتُهُ فَانْدَفَعَ</قول>
  </مقطع>
  <مقطع رقم="١٩٦">فَهٰذَا النَّحْوُ إِنَّمَا يَكُوْنُ في نَفْسِهِ</مقطع>
  <مقطع رقم="١٩٧">وَلَا يَقَعُ عَلَى شَئٍ</مقطع>
  <مقطع رقم="١٩٨">فَصَارَ <حرف>امْتَلَأْتُ</حرف> مِنْ هٰذَا الضَّرْبِ</مقطع>
  <مقطع رقم="١٩٩">كَأَنَّكَ قُلْتَ <قول رقم="٣٦">مَلَأَنِي فَامْتَلَأْتُ</قول>
  </مقطع>
  <مقطع رقم="٢٠٠">وَمِثْلُهُ <قول رقم="٣٧">دَحْرَجْتُهُ فَتَدَحْرَجَ</قول>
  </مقطع>
  <مقطع رقم="٢٠١">وَإِنَّمَا أَصْلُهُ <قول رقم="٣٨">امْتَلَأْتُ مِنَ الْمَاْءِ</قول>
  </مقطع>
  <مقطع رقم="٢٠٢">وَ<قول رقم="٣٩">تَفَقَّأْتُ مِنَ الشَّحْمِ</قول>
  </مقطع>
  <مقطع رقم="٢٠٣">فَحُذِفَ هٰذَا اسْتِخْفَاْفًا</مقطع>
  <مقطع رقم="٢٠٤">وَكَاْنَ الْفِعْلُ أَجْدَرُ أَنَ يَتَعَدَّى إِنْ كَاْنَ هٰذَا يَنْفُذُ</مقطع>
  <مقطع رقم="٢٠٥">وَهُوَ فِي أَنَّهُمْ ضَعَّفُوْهُ مِثْلُهُ</مقطع>
  <رأس هو="٠">
    <عنوان>؟</عنوان>
  </رأس>
  <مقطع رقم="٢٠٦">وَتَقُوْلُ <قول رقم="٤٠" مثال="١">هُوَ أَشْجَعُ النَّاْسِ رَجُلًا</قول>
  </مقطع>
  <مقطع رقم="٢٠٧">وَ<قول رقم="٤١" مثال="١">هُمَا خَيْرُ النَّاْسِ اثْنَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٢٠٨">فَالْمَجْرُوْرُ هُنَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
  <مقطع رقم="٢٠٩">وَانْتَصَبَ الـ<حرف>رَّجُلُ</حرف> وَالِـ<حرف>اثْنَاْنِ</حرف>
  </مقطع>
  <مقطع رقم="٢١٠">كَمَا انْتَصَبَ <حرف>الْوَجْهُ</حرف> في قَوْلِكَ</مقطع>
  <مقطع رقم="٢١١">
    <قول رقم="٤٢" مثال="١">هُوَ أَحْسَنُ مِنْهُ وَجْهًا</قول>
  </مقطع>
  <مقطع رقم="٢١٢">وَلَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="٢١٣">كَمَا لَمْ يَكُنْ ثَمَّةَ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="٢١٤">وَالـ<حرف>رَّجُلُ</حرف> هُوَ الِاسْمُ الْمُبْتَدَأُ</مقطع>
  <مقطع رقم="٢١٥">وَالِـ<حرف>اثْنَاْنِ</حرف> كَذٰلِكَ</مقطع>
  <مقطع رقم="٢١٦">إِنَّمَا مَعْنَاهُ <قول رقم="٤٣">هُوَ خَيْرُ رَجُلٍ فِي النَّاْسِ</قول>
  </مقطع>
  <مقطع رقم="٢١٧">وَ<قول رقم="٤٤" مثال="١">هُمَا خَيْرُ اثْنَيْنِ في النَّاْسِ</قول>
  </مقطع>
  <مقطع رقم="٢١٨">وَإِنْ شِئْتَ لَمْ تَجْعَلْهُ الْأَوَّلَ</مقطع>
  <مقطع رقم="٢١٩">فَتَقُوْلُ <قول رقم="٤٥" مثال="١">هُوَ أَكْثَرُ النَّاْسِ مَاْلًا</قول>
  </مقطع>
  <رأس هو="٠">
    <عنوان>مُجْرَى أَسْمَاءِ الْعَدَدِ</عنوان>
  </رأس>
  <مقطع رقم="٢٢٠">وَمِمَّا أُجْرِيَ هٰذَا الْمُجْرَى أَسْمَاْءُ الْعَدَدِ</مقطع>
  <مقطع رقم="٢٢١">تَقُوْلُ فِيْمَا كَاْنَ لِأَدْنَى الْعِدَّةِ</مقطع>
  <مقطع رقم="٢٢٢">بِالْإِضَاْفَةِ إِلَى مَا يُبْنَى لِجَمْعِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع رقم="٢٢٣">إِلَى أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٢٤">وَتُدْخِلُ في الْمُضَاْفِ إِلَيْهِ الْأَلِفَ وَالَّلامَ</مقطع>
  <مقطع رقم="٢٢٥">لِأَنَّهُ يَكُوْنُ الْأَوَّلُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٢٦">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٢٧">
    <حرف>ثَلَاثَةُ أَبْوَاْبٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٨">
    <حرف>وَأَرْبَعَةُ أَنْفُسٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٢٩">وَ <حرف>أَرْبَعَةُ أَثْوَاْبٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٣٠">وَكَذٰلِكَ تَقُوْلُ فِيْمَا بَيْنَكَ وَبَيْنَ الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٣١">وَإِذَا أَدْخَلْتَ الْأَلِفَ وَاللَّامَ قُلْتَ</مقطع>
  <مقطع رقم="٢٣٢">
    <حرف>خَمْسَةُ الْأَثْوَاْبِ</حرف> وَ<حرف>سِتَّةُ الْأَجْمَاْلِ</حرف>
  </مقطع>
  <مقطع رقم="٢٣٣">فَلَا يَكُوْنُ هٰذَا أَبَدًا إِلَّا غَيْرَ مُنَوَّنٍ</مقطع>
  <مقطع رقم="٢٣٤">يَلْزَمُهُ أَمْرٌ وَاحِدٌ لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٢٣٥">فَإِذَا زِدْتَ عَلَى الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٣٦">شَيْئًا مِنْ أَسْمَاْءِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع رقم="٢٣٧">فَإِنَّهُ يُجْعَلُ مَعَ الْأَوَّلِ اسْمًا وَاْحِدًا اسْتِخْفَاْفًا</مقطع>
  <مقطع رقم="٢٣٨">وَيَكُوْنُ في مَوْضِعِ اسْمٍ مُنَوَّنٍ</مقطع>
  <مقطع رقم="٢٣٩">وَذٰلِكَ قَوْلُكَ <حرف>أَحَدَ عَشَرَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٤٠">وَ <حرف>اثْنَا عَشَرَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٤١">وَ <حرف>إِحْدَى عَشْرَةَ جَاْرِيَةً</حرف>
  </مقطع>
  <مقطع رقم="٢٤٢">فَعَلَى هٰذَا يُجْرَى مِنْ الْوَاْحِدِ إِلَى التِّسْعَةِ</مقطع>
  <مقطع رقم="٢٤٣">فَإِذَا ضَاْعَفْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٤٤">كَاْنَ لَهُ اسْمٌ مِنْ لَفْظِهِ</مقطع>
  <مقطع رقم="٢٤٥">وَلَا يُثَنَّى الْعَقْدُ</مقطع>
  <مقطع رقم="٢٤٦">وَيُجْرَى ذٰلِكَ الِاسْمُ</مقطع>
  <مقطع رقم="٢٤٧">مُجْرَى الْوَاْحِدِ الَّذِي لَحِقَتْهُ الزِّيَاْدَةُ لِلْجَمْعِ</مقطع>
  <مقطع رقم="٢٤٨">كَمَا لَحِقَتْهُ الزِّيَاْدَةُ لِلتَّثْنِيَةِ</مقطع>
  <مقطع رقم="٢٤٩">وَيَكُوْنُ حَرْفُ الْإِعْرَاْبِ الْوَاْوَ وَالْيَاْءَ</مقطع>
  <مقطع رقم="٢٥٠">وَبَعْدَهُمَا النُّوْنُ</مقطع>
  <مقطع رقم="٢٥١">وَذٰلِكَ قَوْلُكَ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع رقم="٢٥٢">فَإِنْ أَرَدْتَ أَنْ تُثَلِّثَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٥٣">كَاْنَ لَهُ اسْمٌ مِنْ لَفْظِ الثَّلَاثَةِ</مقطع>
  <مقطع رقم="٢٥٤">يَجْرِي مَجْرَى الِاسْمِ الَّذِي كَاْنَ لِلتَّثْنِيَةِ</مقطع>
  <مقطع رقم="٢٥٥">وَذٰلِكَ قَوْلُكَ <حرف>ثَلَاثُوْنَ عَبْدًا</حرف>
  </مقطع>
  <مقطع رقم="٢٥٦">وَكَذٰلِكَ إِلَى أَنْ تُتَسِّعَهُ</مقطع>
  <مقطع رقم="٢٥٧">وَتَكُوْنُ النُّوْنُ لَازَمَةً لَهُ</مقطع>
  <مقطع رقم="٢٥٨">كَمَا كَاْنَ تَرْكُ التَّنْوِيْنِ لَازِمًا لِلثَّلَاثَةِ إِلَى الْعَشَرَةِ</مقطع>
  <مقطع رقم="٢٥٩">وَإِنَّمَا فَعَلُوْا هٰذَا بِهَذِهِ الْأَسْمَاْءِ</مقطع>
  <مقطع رقم="٢٦٠">وَأَلْزَمُوْهَا وَجَهًا وَاْحِدًا</مقطع>
  <مقطع رقم="٢٦١">لِأَنَّهَا لَيْسَتْ كَالصِّفَةِ الَّتِي في مَعْنَى الْفِعْلِ</مقطع>
  <مقطع رقم="٢٦٢">وَلَا الَّتِي شُبِّهَتْ بِهَا</مقطع>
  <مقطع رقم="٢٦٣">فَلَمْ تَقْوَ تِلْكَ الْقُوَّةَ</مقطع>
  <مقطع رقم="٢٦٤">وَلَمْ يَجُزْ حِيْنَ جَاوَزْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع رقم="٢٦٥">فِيْمَا تُبَيِّنُ بِهِ مِنْ أَىِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع رقم="٢٦٦">إِلَّا أَنْ يَكُوْنَ لَفْظُهُ وَاْحِدًا</مقطع>
  <مقطع رقم="٢٦٧">وَلَا تَكُوْنُ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع رقم="٢٦٨">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع رقم="٢٦٩">وَكَذٰلِكَ هُوَ إِلَى التِّسْعِيْنَ</مقطع>
  <مقطع رقم="٢٧٠">فِيْمَا يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="٢٧١">وَيُبَيَّنُ بِهِ مِنْ أَيِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع رقم="٢٧٢">فَإِذَا بَلَغْتَ الْعَقْدَ الَّذِي يَلِيْهِ</مقطع>
  <مقطع رقم="٢٧٣">تَرَكْتَ التَّنْوِينَ وَالنُّوْنَ وَأَضَفْتَ</مقطع>
  <مقطع رقم="٢٧٤">وَجَعَلْتَ الَّذِي يَعْمَلُ فِيْهِ</مقطع>
  <مقطع رقم="٢٧٥">وُيُبَّيَنُ بِهِ الْعَدَدُ مِنْ أَىِّ صِنْفٍ هُوَ</مقطع>
  <مقطع رقم="٢٧٦">وَاْحِدًا</مقطع>
  <مقطع رقم="٢٧٧">كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَوَّنْتَ فِيْهِ</مقطع>
  <مقطع رقم="٢٧٨">إِلِّا أَنَّكَ تُدْخِلَ فِيْهِ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع رقم="٢٧٩">لِأَنَّ الْأَوَّلَ يَكُوْنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٨٠">وَلَا يَكُوْنُ الْمُنَوَّنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع رقم="٢٨١">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٨٢">
    <قول رقم="٤٦" مثال="١">مِائَةُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٨٣">وَ<قول رقم="٤٧" مثال="١">مِائَةُ الدِّرْهَمِ</قول>
  </مقطع>
  <مقطع رقم="٢٨٤">وَذٰلِكَ إِنْ ضَاْعَفْتَهُ قُلْتَ</مقطع>
  <مقطع رقم="٢٨٥">
    <قول رقم="٤٨" مثال="١">مِائَتَا دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٨٦">وَ<قول رقم="٤٩" مثال="١">مِائَتَا الدِّيْنَاْرِ</قول>
  </مقطع>
  <مقطع رقم="٢٨٧">وَكَذٰلِكَ الْعَقْدُ الَّذِىْ بَعْدَهُ</مقطع>
  <مقطع رقم="٢٨٨">وَاْحَدًا كَاْنَ أَوْ مُثَنًّى</مقطع>
  <مقطع رقم="٢٨٩">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٩٠">
    <قول رقم="٥٠" مثال="١">أَلْفُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩١">وَ<قول رقم="٥١" مثال="١">أَلْفَا دِرْهَمٍ</قول>
  </مقطع>
  <مقطع رقم="٢٩٢">وَقَدْ جَاْءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="٢٩٣">بَعْضُ هٰذَا مُنَوَّنًا</مقطع>
  <مقطع رقم="٢٩٤">قَالَ الرُّبَيْعُ بْنُ ضَبُعٍ الْفَزَاْرِيُّ</مقطع>
  <شاهدة مقطع="٢٩٥" رقم="١٥">
    <بيت>
      <مصراع>إِذَا عَاْشَ الْفَتَى <ثبات>مِائَتَيْنِ عَاْمًا</ثبات>
      </مصراع>
      <مصراع>فَقَدْ أَوْدَى الْمَسَرَّةُ وَالْفَتَاْءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٩٦">وَقَاْلَ</مقطع>
  <شاهدة مقطع="٢٩٧" رقم="١٦">
    <بيت>
      <مصراع>أَنْعَتُ عِيْرًا مِن حَمِيْرِ خَنْزَرَهْ</مصراع>
      <مصراع>فِي كُلِّ عِيْرٍ <ثبات>مِائَتَاْنِ كَمَرَهْ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <رأس هو="٠">
    <عنوان>صِنْفُ الْمِئَاتِ</عنوان>
  </رأس>
  <مقطع رقم="٢٩٨">وَأَمَّا ثَلٰثُمِائَةٍ إِلَى تِسْعِمِائَةٍ</مقطع>
  <مقطع رقم="٢٩٩">فَكَاْنَ يَنْبَغِي أَنْ تَكُوْنَ في الْقِيَاْسِ</مقطع>
  <مقطع رقم="٣٠٠">
    <حرف>مِئِيْنِ</حرف> أَوْ <حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٠١">وَلَكِنَّهُمْ شَبَّهُوْهُ بِـ<حرف>عِشْرِيْنَ</حرف> وَ<حرف>أَحَدَ عَشَرَ</حرف>
  </مقطع>
  <مقطع رقم="٣٠٢">حَيْثُ جَعَلُوْا مَا يُبَيَّنُ بِهِ الْعَدَدُ وَاْحِدًا</مقطع>
  <مقطع رقم="٣٠٣">لِأَنَّهُ اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع رقم="٣٠٤">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع رقم="٣٠٥">وَلَيْسَ بِمُسْتَنْكَرٍ في كَلَامِهِمْ</مقطع>
  <مقطع رقم="٣٠٦">أَنْ يَكُوْنَ اللَّفْظُ وَاْحِدًا وَالْمَعْنَى جَمِيْعٌ</مقطع>
  <مقطع رقم="٣٠٧">حَتَّى قَاْلَ بَعْضُهُمْ فِي الشِّعْرِ مِنْ ذٰلِكَ</مقطع>
  <مقطع رقم="٣٠٨">مَا لَا يُسْتَعْمَلُ في الْكَلَامِ</مقطع>
  <مقطع رقم="٣٠٩">وَقَاْلَ عَلْقَمَةُ بِنُ عَبَدَةَ</مقطع>
  <شاهدة مقطع="٣١٠" رقم="١٧">
    <بيت>
      <مصراع>بِهَا جِيَفُ الْحَسْرَى فَأَمَّا عِظَاْمُهَا</مصراع>
      <مصراع>فَبِيْضٌ وَأَمَّا <ثبات>جِلْدُهَا</ثبات> فَصَلِيْبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣١١">وَقَاْلَ</مقطع>
  <شاهدة مقطع="٣١٢" رقم="١٨">
    <بيت>
      <مصراع>لَا تُنْكِرُوْا الْقَتْلَ وَقَدْ سُبِينَا</مصراع>
      <مصراع>في <ثبات>حَلْقِكُمْ</ثبات> عَظْمٌ وَقَدْ شَجِينَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣١٣">فَاخْتُصَّ التَّثْلِيْثُ بِهٰذَا الْبَاْبِ إِلَى تِسْعِمِائَةٍ</مقطع>
  <رأس هو="٠">
    <عنوان>لَدُنْ غُدْوَةً</عنوان>
  </رأس>
  <مقطع رقم="٣١٤">كَمَا أَنَّ <حرف>لَدُنْ</حرف> لَهَا في <حرف>غُدْوَةً</حرف> حَاْلٌ لَيْسَتْ في غَيْرِهَا تُنْصَبُ بِهَا</مقطع>
  <مقطع رقم="٣١٥">كَأَنَّهُ أَلْحَقَ التَّنْوِينَ في لُغَةِ مَنْ قَالَ <حرف>لَدُ</حرف>
  </مقطع>
  <مقطع رقم="٣١٦">وَذٰلِكَ قَوْلُكَ <قول رقم="٥٢" مثال="١">مِنْ لَدُنْ غُدْوَةً</قول>
  </مقطع>
  <مقطع رقم="٣١٧">وَقَالَ بَعْضُهُمْ <قول رقم="٥٣" مثال="١">لَدًا غَدْوَةً</قول>
  </مقطع>
  <مقطع رقم="٣١٨">كَأَنَّهُ أَسْكَنَ الدَّالَّ ثُمَّ فَتَحَهَا</مقطع>
  <مقطع رقم="٣١٩">كَمَا قَالَ <قول رقم="٥٤">اضْرِبَنْ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٣٢٠">فَفُتِحَ الْبَاءُ لَمَّا جَاءَ بِالنُّوْنِ الْخَفِيْفَةِ</مقطع>
  <مقطع رقم="٣٢١">وَالْجَرُّ في <حرف>غُدْوَةٍ</حرف> هُوَ الْوَجْهُ وَالْقِيَاسُ</مقطع>
  <مقطع رقم="٣٢٢">وَتَكُوْنُ النُّوْنُ مِنْ نَفْسِ الْحَرْفِ</مقطع>
  <مقطع رقم="٣٢٣">بِمَنْزِلَةِ نُوْنِ <حرف>مِنْ</حرف> وَ<حرف>عَنْ</حرف>
  </مقطع>
  <رأس هو="٠">
    <عنوان>الشَّذُّ في بعض الكلام</عنوان>
  </رأس>
  <مقطع رقم="٣٢٤">فَقَدْ يَشَذُّ الشَّيْءُ مِنْ كَلَامِهِمْ عَنْ نَظَاْئِرِهِ</مقطع>
  <مقطع رقم="٣٢٥">وَيَسْتَخِفُّوْنَ الشَّيْءَ في مَوْضِعٍ وَ لَا يَسْتَخِفُّوْنَهُ في غَيْرِهِ</مقطع>
  <مقطع رقم="٣٢٦">وَذٰلِكَ قَوْلُهُمْ <قول رقم="٥٥">مَا شَعَرْتُ بِهِ شِعْرَةً</قول> وَ<قول رقم="٥٦">لَيْتَ شِعْرِي</قول>
  </مقطع>
  <مقطع رقم="٣٢٧">وَيَقُوْلُوْنَ <حرف>الْعَمْرُ</حرف> وَ<حرف>الْعُمْرُ</حرف>
  </مقطع>
  <مقطع رقم="٣٢٨">لَا يَقُوْلُوْنَ في الْيَمِيْنِ إِلَّا بِالْفَتْحِ</مقطع>
  <مقطع رقم="٣٢٩">يَقُوْلُوْنَ كُلُّهُمْ <حرف>لَعَمْرُكَ</حرف>
  </مقطع>
  <مقطع رقم="٣٣٠">وَسَتَرَى أَشْبَاْهَ هٰذَا أَيْضًا في كَلَامِهِمْ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع رقم="٣٣١">وَمِمَّا جَاْءَ في الشِّعْرِ</مقطع>
  <مقطع رقم="٣٣٢">عَلَى لَفْظِ الْوَاْحِدِ يُرَاْدُ بِهِ الْجَمِيْعُ</مقطع>
  <شاهدة مقطع="٣٣٣" رقم="١٩">
    <بيت>
      <مصراع>كُلُوْا فِي بَعْضِ <ثبات>بَطْنِكُمُ</ثبات> تَعِفُّوْا</مصراع>
      <مصراع>فَإِنَّ زَمَاْنَكُمْ زَمَنٌ خَمِيْصُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٣٤">وَمِثْلُ ذٰلِكَ في الْكَلَامِ قَوْلُهُ تَبَاْرَكَ وَتَعَاْلَى</مقطع>
  <مقطع رقم="٣٣٥">
    <آية سورة="٤" آية="٤">فَإِنْ طِبْنَ لَكُمْ عَنْ شَيْءٍ مِنْهُ نَفْسًا</آية>
  </مقطع>
  <مقطع رقم="٣٣٦">وَ <حرف>قَرِرْنَا بِهِ عَيْنًا</حرف>
  </مقطع>
  <مقطع رقم="٣٣٧">وَإِنْ شِئْتَ قُلْتُ <حرف>أَعْيُنًا</حرف> وَ<حرف>أَنْفُسًا</حرف>
  </مقطع>
  <مقطع رقم="٣٣٨">كَمَا قُلْتَ <حرف>ثَلَاثُمِائَةٍ</حرف> وَ<حرف>ثَلَاثُ مِئِيْنَ</حرف> وَ<حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٣٩">وَلَمْ يُدْخِلُوَا الْأَلِفَ وَاللَّامَ كَمَا لَمْ يُدْخِلُوَا في <حرف>امْتَلَأْتُ مَاْءً</حرف>
  </مقطع>
