    <عنوان>مُجْرَى أَسْمَاءِ الْعَدَدِ</عنوان>
  </رأس>
  <مقطع هوية='٧٦١٠٢' رقم="٢٢٠">وَمِمَّا أُجْرِيَ هٰذَا الْمُجْرَى أَسْمَاْءُ الْعَدَدِ</مقطع>
  <مقطع هوية='٥٧٣٣٤' رقم="٢٢١">تَقُوْلُ فِيْمَا كَاْنَ لِأَدْنَى الْعِدَّةِ</مقطع>
  <مقطع هوية='٠٣٧٩٤' رقم="٢٢٢">بِالْإِضَاْفَةِ إِلَى مَا يُبْنَى لِجَمْعِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع هوية='٣٠٨٢٢' رقم="٢٢٣">إِلَى أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع هوية='٩٥٦٣٦' رقم="٢٢٤">وَتُدْخِلُ في الْمُضَاْفِ إِلَيْهِ الْأَلِفَ وَالَّلامَ</مقطع>
  <مقطع هوية='٨٢٤٦١' رقم="٢٢٥">لِأَنَّهُ يَكُوْنُ الْأَوَّلُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع هوية='٢٠٧٤٩' رقم="٢٢٦">وَذٰلِكَ قَوْلُكَ <حرف>ثَلَاثَةُ أَبْوَاْبٍ</حرف> وَ<حرف>أَرْبَعَةُ أَنْفُسٍ</حرف> وَ<حرف>أَرْبَعَةُ أَثْوَاْبٍ</حرف></مقطع>
  <مقطع هوية='٦٩٦٨١' رقم="٢٣٠">وَكَذٰلِكَ تَقُوْلُ فِيْمَا بَيْنَكَ وَبَيْنَ الْعَشَرَةِ</مقطع>
  <مقطع هوية='٤٣١٤٢' رقم="٢٣١">وَإِذَا أَدْخَلْتَ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع هوية='٩٤٢٦٩' رقم="٢٣٢">قُلْتَ <حرف>خَمْسَةُ الْأَثْوَاْبِ</حرف> وَ<حرف>سِتَّةُ الْأَجْمَاْلِ</حرف></مقطع>
  <مقطع هوية='٦٨٦٤٦' رقم="٢٣٣">فَلَا يَكُوْنُ هٰذَا أَبَدًا إِلَّا غَيْرَ مُنَوَّنٍ</مقطع>
  <مقطع هوية='٨٩٧١٤' رقم="٢٣٤">يَلْزَمُهُ أَمْرٌ وَاحِدٌ لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٧٤٤٤٦' رقم="٢٣٥">فَإِذَا زِدْتَ عَلَى الْعَشَرَةِ</مقطع>
  <مقطع هوية='٤٧٧٧٠' رقم="٢٣٦">شَيْئًا مِنْ أَسْمَاْءِ أَدْنَى الْعَدَدِ</مقطع>
  <مقطع هوية='٢١٦٠٥' رقم="٢٣٧">فَإِنَّهُ يُجْعَلُ مَعَ الْأَوَّلِ اسْمًا وَاْحِدًا اسْتِخْفَاْفًا</مقطع>
  <مقطع هوية='٩٩٣٨٠' رقم="٢٣٨">وَيَكُوْنُ في مَوْضِعِ اسْمٍ مُنَوَّنٍ</مقطع>
  <مقطع هوية='٩١٦٧١' رقم="٢٣٩">وَذٰلِكَ قَوْلُكَ <حرف>أَحَدَ عَشَرَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع هوية='٧٤٤٨٤' رقم="٢٤٠">وَ <حرف>اثْنَا عَشَرَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع هوية='١٨١٥١' رقم="٢٤١">وَ <حرف>إِحْدَى عَشْرَةَ جَاْرِيَةً</حرف>
  </مقطع>
  <مقطع هوية='٨٣٦٤٠' رقم="٢٤٢">فَعَلَى هٰذَا يُجْرَى مِنْ الْوَاْحِدِ إِلَى التِّسْعَةِ</مقطع>
  <مقطع هوية='١١٣٠٧' رقم="٢٤٣">فَإِذَا ضَاْعَفْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع هوية='٩٠٦٦٤' رقم="٢٤٤">كَاْنَ لَهُ اسْمٌ مِنْ لَفْظِهِ</مقطع>
  <مقطع هوية='٦١٠٤٣' رقم="٢٤٥">وَلَا يُثَنَّى الْعَقْدُ</مقطع>
  <مقطع هوية='١٥٩٥٦' رقم="٢٤٦">وَيُجْرَى ذٰلِكَ الِاسْمُ</مقطع>
  <مقطع هوية='٢٧٨٩٧' رقم="٢٤٧">مُجْرَى الْوَاْحِدِ الَّذِي لَحِقَتْهُ الزِّيَاْدَةُ لِلْجَمْعِ</مقطع>
  <مقطع هوية='٦٣٠٣٣' رقم="٢٤٨">كَمَا لَحِقَتْهُ الزِّيَاْدَةُ لِلتَّثْنِيَةِ</مقطع>
  <مقطع هوية='٨٢٠٥٥' رقم="٢٤٩">وَيَكُوْنُ حَرْفُ الْإِعْرَاْبِ الْوَاْوَ وَالْيَاْءَ</مقطع>
  <مقطع هوية='٠٩٥٥٤' رقم="٢٥٠">وَبَعْدَهُمَا النُّوْنُ</مقطع>
  <مقطع هوية='٦٩٨٢٣' رقم="٢٥١">وَذٰلِكَ قَوْلُكَ <حرف>عِشْرُوْنَ دِرْهَمًا</حرف>
  </مقطع>
  <مقطع هوية='٥٣٦٢٢' رقم="٢٥٢">فَإِنْ أَرَدْتَ أَنْ تُثَلِّثَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع هوية='٧٠٤٥٩' رقم="٢٥٣">كَاْنَ لَهُ اسْمٌ مِنْ لَفْظِ الثَّلَاثَةِ</مقطع>
  <مقطع هوية='٠٣٥٥٥' رقم="٢٥٤">يَجْرِي مَجْرَى الِاسْمِ الَّذِي كَاْنَ لِلتَّثْنِيَةِ</مقطع>
  <مقطع هوية='٩١١٢١' رقم="٢٥٥">وَذٰلِكَ قَوْلُكَ <حرف>ثَلَاثُوْنَ عَبْدًا</حرف>
  </مقطع>
  <مقطع هوية='٢٧٨٧٢' رقم="٢٥٦">وَكَذٰلِكَ إِلَى أَنْ تُتَسِّعَهُ</مقطع>
  <مقطع هوية='٠٣٢٩١' رقم="٢٥٧">وَتَكُوْنُ النُّوْنُ لَازَمَةً لَهُ</مقطع>
  <مقطع هوية='٨٢٦٣٣' رقم="٢٥٨">كَمَا كَاْنَ تَرْكُ التَّنْوِيْنِ لَازِمًا لِلثَّلَاثَةِ إِلَى الْعَشَرَةِ</مقطع>
  <مقطع هوية='٣٣٤١٦' رقم="٢٥٩">وَإِنَّمَا فَعَلُوْا هٰذَا بِهَذِهِ الْأَسْمَاْءِ</مقطع>
  <مقطع هوية='٣٣٦٩٤' رقم="٢٦٠">وَأَلْزَمُوْهَا وَجَهًا وَاْحِدًا</مقطع>
  <مقطع هوية='٢٦٥٠٦' رقم="٢٦١">لِأَنَّهَا لَيْسَتْ كَالصِّفَةِ الَّتِي في مَعْنَى الْفِعْلِ</مقطع>
  <مقطع هوية='٣٣٣٤٠' رقم="٢٦٢">وَلَا الَّتِي شُبِّهَتْ بِهَا</مقطع>
  <مقطع هوية='٦١٣٣٠' رقم="٢٦٣">فَلَمْ تَقْوَ تِلْكَ الْقُوَّةَ</مقطع>
  <مقطع هوية='٦٥٧٠٣' رقم="٢٦٤">وَلَمْ يَجُزْ حِيْنَ جَاوَزْتَ أَدْنَى الْعُقُوْدِ</مقطع>
  <مقطع هوية='٥٣٨٥٣' رقم="٢٦٥">فِيْمَا تُبَيِّنُ بِهِ مِنْ أَىِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع هوية='٩٧٥٤٤' رقم="٢٦٦">إِلَّا أَنْ يَكُوْنَ لَفْظُهُ وَاْحِدًا</مقطع>
  <مقطع هوية='١١٨٠٦' رقم="٢٦٧">وَلَا تَكُوْنُ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
  <مقطع هوية='٢٩٩٤٥' رقم="٢٦٨">لِمَا ذَكَرْتُ لَكَ</مقطع>
  <مقطع هوية='٢٩٩٠٥' رقم="٢٦٩">وَكَذٰلِكَ هُوَ إِلَى التِّسْعِيْنَ</مقطع>
  <مقطع هوية='٠٥٥٦٥' رقم="٢٧٠">فِيْمَا يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية='٩٢٧١٠' رقم="٢٧١">وَيُبَيَّنُ بِهِ مِنْ أَيِّ صِنْفٍ الْعَدَدُ</مقطع>
  <مقطع هوية='٥٦٤٧٧' رقم="٢٧٢">فَإِذَا بَلَغْتَ الْعَقْدَ الَّذِي يَلِيْهِ</مقطع>
  <مقطع هوية='٦٨٢٤٥' رقم="٢٧٣">تَرَكْتَ التَّنْوِينَ وَالنُّوْنَ وَأَضَفْتَ</مقطع>
  <مقطع هوية='٠٩٩٣٠' رقم="٢٧٤">وَجَعَلْتَ الَّذِي يَعْمَلُ فِيْهِ</مقطع>
  <مقطع هوية='٧٤٧١٩' رقم="٢٧٥">وَيُبَيَّنُ بِهِ الْعَدَدُ مِنْ أَىِّ صِنْفٍ هُوَ</مقطع>
  <مقطع هوية='٩٥٠٩١' رقم="٢٧٦">وَاْحِدًا</مقطع>
  <مقطع هوية='٤١٣٠٨' رقم="٢٧٧">كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَوَّنْتَ فِيْهِ</مقطع>
  <مقطع هوية='٩٣٨٠٤' رقم="٢٧٨">إِلِّا أَنَّكَ تُدْخِلَ فِيْهِ الْأَلِفَ وَاللَّامَ</مقطع>
  <مقطع هوية='٨٢٤٠٣' رقم="٢٧٩">لِأَنَّ الْأَوَّلَ يَكُوْنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع هوية='٨٦٧٨٢' رقم="٢٨٠">وَلَا يَكُوْنُ الْمُنَوَّنُ بِهِ مَعْرِفَةً</مقطع>
  <مقطع هوية='٩٥٢٠١' رقم="٢٨١">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٤٧٢٣٤' رقم="٢٨٢">
    <قول هوية='٧٤٨٤٣' رقم="٤٦" مثال="١">مِائَةُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع هوية='٨٣٤٠٢' رقم="٢٨٣">وَ<قول هوية='٢٠٢٨٥' رقم="٤٧" مثال="١">مِائَةُ الدِّرْهَمِ</قول>
  </مقطع>
  <مقطع هوية='٤٢٥٣٣' رقم="٢٨٤">وَذٰلِكَ إِنْ ضَاْعَفْتَهُ قُلْتَ</مقطع>
  <مقطع هوية='١٤٨٥٨' رقم="٢٨٥">
    <قول هوية='٢٦٦٨٥' رقم="٤٨" مثال="١">مِائَتَا دِرْهَمٍ</قول>
  </مقطع>
  <مقطع هوية='٠٠٨١٣' رقم="٢٨٦">وَ<قول هوية='٥٣٦٢٦' رقم="٤٩" مثال="١">مِائَتَا الدِّيْنَاْرِ</قول>
  </مقطع>
  <مقطع هوية='٦٢٣٤٤' رقم="٢٨٧">وَكَذٰلِكَ الْعَقْدُ الَّذِىْ بَعْدَهُ</مقطع>
  <مقطع هوية='٦٣٧٤٥' رقم="٢٨٨">وَاْحَدًا كَاْنَ أَوْ مُثَنًّى</مقطع>
  <مقطع هوية='٣٨٩١٥' رقم="٢٨٩">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع هوية='٨٧٢٩٧' رقم="٢٩٠">
    <قول هوية='٧٢٤٤٢' رقم="٥٠" مثال="١">أَلْفُ دِرْهَمٍ</قول>
  </مقطع>
  <مقطع هوية='٥١٨٨٤' رقم="٢٩١">وَ<قول هوية='٢٥١٨٨' رقم="٥١" مثال="١">أَلْفَا دِرْهَمٍ</قول>
  </مقطع>
  <مقطع هوية='٨٠١٠٥' رقم="٢٩٢">وَقَدْ جَاْءَ في الشِّعْرِ</مقطع>
  <مقطع هوية='٥٧٤٩٦' رقم="٢٩٣">بَعْضُ هٰذَا مُنَوَّنًا</مقطع>
  <مقطع هوية='٧٤٤٠٤' رقم="٢٩٤">قَالَ الرُّبَيْعُ بْنُ ضَبُعٍ الْفَزَاْرِيُّ</مقطع>
  <شاهدة هوية='٠٣٥٤٦' مقطع="٢٩٥" رقم="١٥">
    <بيت>
      <مصراع>إِذَا عَاْشَ الْفَتَى <ثبات>مِائَتَيْنِ عَاْمًا</ثبات>
      </مصراع>
      <مصراع>فَقَدْ أَوْدَى الْمَسَرَّةُ وَالْفَتَاْءُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٩٤٦٧٠' رقم="٢٩٦">وَقَاْلَ</مقطع>
  <شاهدة هوية='٠٩٤٨١' مقطع="٢٩٧" رقم="١٦">
    <بيت>
      <مصراع>أَنْعَتُ عِيْرًا مِن حَمِيْرِ خَنْزَرَهْ</مصراع>
      <مصراع>فِي كُلِّ عِيْرٍ <ثبات>مِائَتَاْنِ كَمَرَهْ</ثبات>
      </مصراع>
    </بيت>
  </شاهدة>
  <رأس هوية="٦٠٧٩٢">
    <عنوان>صِنْفُ الْمِئَاتِ</عنوان>
  </رأس>
  <مقطع هوية='٨٦٢٩٣' رقم="٢٩٨">وَأَمَّا ثَلٰثُمِائَةٍ إِلَى تِسْعِمِائَةٍ</مقطع>
  <مقطع هوية='٣٠٦٦٨' رقم="٢٩٩">فَكَاْنَ يَنْبَغِي أَنْ تَكُوْنَ في الْقِيَاْسِ</مقطع>
  <مقطع هوية='٧٥٠٠٠' رقم="٣٠٠">
    <حرف>مِئِيْنِ</حرف> أَوْ <حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع هوية='١١٠٩٠' رقم="٣٠١">وَلَكِنَّهُمْ شَبَّهُوْهُ بِـ<حرف>عِشْرِيْنَ</حرف> وَ<حرف>أَحَدَ عَشَرَ</حرف>
  </مقطع>
  <مقطع هوية='١٦١٩٢' رقم="٣٠٢">حَيْثُ جَعَلُوْا مَا يُبَيَّنُ بِهِ الْعَدَدُ وَاْحِدًا</مقطع>
  <مقطع هوية='٠٣٦٠٤' رقم="٣٠٣">لِأَنَّهُ اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع هوية='٤٠٣٥٤' رقم="٣٠٤">كَمَا أَنَّ <حرف>عِشْرِيْنَ</حرف> اسْمٌ لِعَدَدٍ</مقطع>
  <مقطع هوية='٤٨٥٤٨' رقم="٣٠٥">وَلَيْسَ بِمُسْتَنْكَرٍ في كَلَامِهِمْ</مقطع>
  <مقطع هوية='٩٩٥٤٤' رقم="٣٠٦">أَنْ يَكُوْنَ اللَّفْظُ وَاْحِدًا وَالْمَعْنَى جَمِيْعٌ</مقطع>
  <مقطع هوية='٧٩٧٦٥' رقم="٣٠٧">حَتَّى قَاْلَ بَعْضُهُمْ فِي الشِّعْرِ مِنْ ذٰلِكَ</مقطع>
  <مقطع هوية='٥٣٤١٣' رقم="٣٠٨">مَا لَا يُسْتَعْمَلُ في الْكَلَامِ</مقطع>
  <مقطع هوية='٠٢٠١١' رقم="٣٠٩">وَقَاْلَ عَلْقَمَةُ بِنُ عَبَدَةَ</مقطع>
  <شاهدة هوية='٨٣١٩٥' مقطع="٣١٠" رقم="١٧">
    <بيت>
      <مصراع>بِهَا جِيَفُ الْحَسْرَى فَأَمَّا عِظَاْمُهَا</مصراع>
      <مصراع>فَبِيْضٌ وَأَمَّا <ثبات>جِلْدُهَا</ثبات> فَصَلِيْبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٣٤٥٠٦' رقم="٣١١">وَقَاْلَ</مقطع>
  <شاهدة هوية='٤٢٦٤٦' مقطع="٣١٢" رقم="١٨">
    <بيت>
      <مصراع>لَا تُنْكِرُوْا الْقَتْلَ وَقَدْ سُبِينَا</مصراع>
      <مصراع>في <ثبات>حَلْقِكُمْ</ثبات> عَظْمٌ وَقَدْ شَجِينَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٠٥٤٢' رقم="٣١٣">فَاخْتُصَّ التَّثْلِيْثُ بِهٰذَا الْبَاْبِ إِلَى تِسْعِمِائَةٍ</مقطع>
  <رأس هوية="٧٦٧٠٧">
    <عنوان>لَدُنْ غُدْوَةً</عنوان>
  </رأس>
  <مقطع هوية='٧٦١٤٧' رقم="٣١٤">كَمَا أَنَّ <حرف>لَدُنْ</حرف> لَهَا في <حرف>غُدْوَةً</حرف> حَاْلٌ لَيْسَتْ في غَيْرِهَا تُنْصَبُ بِهَا</مقطع>
  <مقطع هوية='٠٥١٣١' رقم="٣١٥">كَأَنَّهُ أَلْحَقَ التَّنْوِينَ في لُغَةِ مَنْ قَالَ <حرف>لَدُ</حرف>
  </مقطع>
  <مقطع هوية='٦٠٨٨٠' رقم="٣١٦">وَذٰلِكَ قَوْلُكَ <قول هوية='٧٩٠٦٩' رقم="٥٢" مثال="١">مِنْ لَدُنْ غُدْوَةً</قول>
  </مقطع>
  <مقطع هوية='٦٧١٧٣' رقم="٣١٧">وَقَالَ بَعْضُهُمْ <قول هوية='٣٧٨١٦' رقم="٥٣" مثال="١">لَدًا غَدْوَةً</قول>
  </مقطع>
  <مقطع هوية='٦٤٣٠٥' رقم="٣١٨">كَأَنَّهُ أَسْكَنَ الدَّالَّ ثُمَّ فَتَحَهَا</مقطع>
  <مقطع هوية='٣٩٥٣٦' رقم="٣١٩">كَمَا قَالَ <قول هوية='٤٥٨٠٧' رقم="٥٤">اضْرِبَنْ زَيْدًا</قول>
  </مقطع>
  <مقطع هوية='٠٨٩٥٧' رقم="٣٢٠">فَفُتِحَ الْبَاءُ لَمَّا جَاءَ بِالنُّوْنِ الْخَفِيْفَةِ</مقطع>
  <مقطع هوية='٩٣٤٣٥' رقم="٣٢١">وَالْجَرُّ في <حرف>غُدْوَةٍ</حرف> هُوَ الْوَجْهُ وَالْقِيَاسُ</مقطع>
  <مقطع هوية='٦٥٢٤١' رقم="٣٢٢">وَتَكُوْنُ النُّوْنُ مِنْ نَفْسِ الْحَرْفِ</مقطع>
  <مقطع هوية='٧٨٦٢٣' رقم="٣٢٣">بِمَنْزِلَةِ نُوْنِ <حرف>مِنْ</حرف> وَ<حرف>عَنْ</حرف>
  </مقطع>
  <رأس هوية="١٥١١٣">
    <عنوان>الشَّذُّ في بعض الكلام</عنوان>
  </رأس>
  <مقطع هوية='٧٩٤٤٦' رقم="٣٢٤">فَقَدْ يَشَذُّ الشَّيْءُ مِنْ كَلَامِهِمْ عَنْ نَظَاْئِرِهِ</مقطع>
  <مقطع هوية='٩٨٣٤٦' رقم="٣٢٥">وَيَسْتَخِفُّوْنَ الشَّيْءَ في مَوْضِعٍ وَ لَا يَسْتَخِفُّوْنَهُ في غَيْرِهِ</مقطع>
  <مقطع هوية='٦٨١٨٢' رقم="٣٢٦">وَذٰلِكَ قَوْلُهُمْ <قول هوية='٦٤٨٤٩' رقم="٥٥">مَا شَعَرْتُ بِهِ شِعْرَةً</قول> وَ<قول هوية='٦٠٩٠١' رقم="٥٦">لَيْتَ شِعْرِي</قول>
  </مقطع>
  <مقطع هوية='٥٢٣٥٥' رقم="٣٢٧">وَيَقُوْلُوْنَ <حرف>الْعَمْرُ</حرف> وَ<حرف>الْعُمْرُ</حرف>
  </مقطع>
  <مقطع هوية='٧٠١٤٢' رقم="٣٢٨">لَا يَقُوْلُوْنَ في الْيَمِيْنِ إِلَّا بِالْفَتْحِ</مقطع>
  <مقطع هوية='٢٢٩٨٩' رقم="٣٢٩">يَقُوْلُوْنَ كُلُّهُمْ <حرف>لَعَمْرُكَ</حرف>
  </مقطع>
  <مقطع هوية='٣٠٠٧٦' رقم="٣٣٠">وَسَتَرَى أَشْبَاْهَ هٰذَا أَيْضًا في كَلَامِهِمْ إِنْ شَاْءَ اللّٰهُ</مقطع>
  <مقطع هوية='٧١٢٦٨' رقم="٣٣١">وَمِمَّا جَاْءَ في الشِّعْرِ</مقطع>
  <مقطع هوية='٢١٢٥٧' رقم="٣٣٢">عَلَى لَفْظِ الْوَاْحِدِ يُرَاْدُ بِهِ الْجَمِيْعُ</مقطع>
  <شاهدة هوية='٤٢٧٤٩' مقطع="٣٣٣" رقم="١٩">
    <بيت>
      <مصراع>كُلُوْا فِي بَعْضِ <ثبات>بَطْنِكُمُ</ثبات> تَعِفُّوْا</مصراع>
      <مصراع>فَإِنَّ زَمَاْنَكُمْ زَمَنٌ خَمِيْصُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع هوية='٨٨٨٣١' رقم="٣٣٤">وَمِثْلُ ذٰلِكَ في الْكَلَامِ قَوْلُهُ تَبَاْرَكَ وَتَعَاْلَى</مقطع>
  <مقطع هوية='٧٧١١١' رقم="٣٣٥">
    <آية هوية='٦١١٥٩' سورة="٤" آية="٤">فَإِنْ طِبْنَ لَكُمْ عَنْ شَيْءٍ مِنْهُ نَفْسًا</آية>
  </مقطع>
  <مقطع هوية='٧٣٣١٥' رقم="٣٣٦">وَ <حرف>قَرِرْنَا بِهِ عَيْنًا</حرف>
  </مقطع>
  <مقطع هوية='٣٧٩٧٦' رقم="٣٣٧">وَإِنْ شِئْتَ قُلْتُ <حرف>أَعْيُنًا</حرف> وَ<حرف>أَنْفُسًا</حرف>
  </مقطع>
  <مقطع هوية='١٢١٥٦' رقم="٣٣٨">كَمَا قُلْتَ <حرف>ثَلَاثُمِائَةٍ</حرف> وَ<حرف>ثَلَاثُ مِئِيْنَ</حرف> وَ<حرف>مِئَاتٍ</حرف>
  </مقطع>
  <مقطع هوية='٩٢٥١٨' رقم="٣٣٩">وَلَمْ يُدْخِلُوَا الْأَلِفَ وَاللَّامَ كَمَا لَمْ يُدْخِلُوَا في <حرف>امْتَلَأْتُ مَاْءً</حرف>
  </مقطع>
