  <مقطع هوية='٧٢٢٧٥' رقم="٢١٢">وَلَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
  <مقطع هوية='٣١٩٩٢' رقم="٢١٣">كَمَا لَمْ يَكُنْ ثَمَّةَ إِلَّا نَكِرَةً</مقطع>
  <مقطع هوية='٠٤٨٥٩' رقم="٢١٤">وَالـ<حرف>رَّجُلُ</حرف> هُوَ الِاسْمُ الْمُبْتَدَأُ</مقطع>
  <مقطع هوية='٧٤٤٩٩' رقم="٢١٥">وَالِـ<حرف>اثْنَاْنِ</حرف> كَذٰلِكَ</مقطع>
  <مقطع هوية='٥٥٣٨١' رقم="٢١٦">إِنَّمَا مَعْنَاهُ <قول هوية='٠٤٨١٣' رقم="٤٣">هُوَ خَيْرُ رَجُلٍ فِي النَّاْسِ</قول>
  </مقطع>
  <مقطع هوية='٦٢٠٢٥' رقم="٢١٧">وَ<قول هوية='٠٨٢٤٣' رقم="٤٤" مثال="١">هُمَا خَيْرُ اثْنَيْنِ في النَّاْسِ</قول>
  </مقطع>
  <مقطع هوية='٧٥٤٦٧' رقم="٢١٨">وَإِنْ شِئْتَ لَمْ تَجْعَلْهُ الْأَوَّلَ</مقطع>
  <مقطع هوية='٠٢٨٧١' رقم="٢١٩">فَتَقُوْلُ <قول هوية='١٦٢٤٧' رقم="٤٥" مثال="١">هُوَ أَكْثَرُ النَّاْسِ مَاْلًا</قول>
