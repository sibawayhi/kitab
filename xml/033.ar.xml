<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٦٩"
     درنبورج="١-٥٨"
     هارون="١-١٣٧"
     يعقوب="١-١٩٢"
     البكاء="١-٢٠٩"
     رقم="٣٣">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ الْأَمْرِ وَالنَّهْيِ</مقطع>
   </عنوان>
    <فقرة>
       <مقطع رقم="٢">وَالْأَمْرُ وَالنَّهْيُ</مقطع>
       <مقطع رقم="٣">يُخْتَاْرُ فِيْهِمَا النَّصْبُ فِي الِٱسْمِ</مقطع>
       <مقطع رقم="٤">الَّذِىْ يُبْنَىْ عَلَيْهِ الْفِعْلُ</مقطع>
       <مقطع رقم="٥">وَيُبْنَى عَلَى الْفِعْلِ</مقطع>
       <مقطع رقم="٦">كَمَا اخْتِيرَ ذٰلِكَ فِي بَاْبِ الِاسْتِفْهَامِ</مقطع>
       <مقطع رقم="٧">لِأَنَّ الْأَمْرَ وَالنَّهْيَ إِنَّمَا هُمَا لِلْفِعْلِ</مقطع>
       <مقطع رقم="٨">كَمَا أَنَّ حُرُوْفَ الاِسْتِفْهَامِ بِالْفِعْلِ أَوْلَى</مقطع>
       <مقطع رقم="٩">وَكَانَ الْأَصْلُ فِيْهَا أَنْ يُبْتَدَأُ بِالْفِعْلِ قَبْلَ الٱسْمِ</مقطع>
       <مقطع رقم="١٠">فَهَكَذَا الْأَمْرُ وَالنَّهْيُ</مقطع>
       <مقطع رقم="١١">لِأَنَّهُمَا لَا يَقَعَانِ إِلَّا بِالْفِعْلِ</مقطع>
       <مقطع رقم="١٢">مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
       <مقطع رقم="١٣">وَهُمَا أَقْوَى فِي هٰذَا مِنَ الِاسْتِفْهَامِ</مقطع>
       <مقطع رقم="١٤">لِأَنَّ حُرُوْفَ الاْسْتِفْهَامِ قَدْ <بَدَل>
             <يع>تُسْتَعْمَلُ</يع>
             <بكاْ>يُسْتَفْهَمُ بِهَا</بكاْ>
         </بَدَل>
      </مقطع>
       <هارون مجلد="١" صفحة="١٣٧"/>
       <مقطع رقم="١٥">وَلَيْسَ بَعْدَهَا إِلَّا الْأَسْمَاْءُ</مقطع>
       <مقطع رقم="١٦">نَحْوُ قَوْلِكَ <قول>أَزَيْدٌ أَخُوْكَ</قول>
      </مقطع>
       <مقطع رقم="١٧">وَ<قول>مَتَى زَيْدٌ مُنْطَلِقٌ</قول>
      </مقطع>
       <مقطع رقم="١٨">وَ<قول>هَلْ عَمْروٌ ظَرِيْفٌ</قول>
      </مقطع>
       <مقطع رقم="١٩">وَالْأَمْرُ وَالنَّهْيُ لَا يَكُوْنَانِ إِلَّا بِفِعْلٍ</مقطع>
       <مقطع رقم="٢٠">وَذٰلِكَ قَوْلُكَ <قول>زَيْدًا ٱِضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٢١">وَ<قول>عَمْرًا ٱُمْرُرْ بِهِ</قول>
      </مقطع>
       <مقطع رقم="٢٢">وَ<قول>خَالِدًا ٱِضْرِبْ أَبَاهُ</قول>
      </مقطع>
       <مقطع رقم="٢٣">وَ<قول>زَيْدًا ٱِشْتِرِ لَهُ ثَوْبًا</قول>
      </مقطع>
       <مقطع رقم="٢٤">وَمِثْلُ ذٰلِكَ <قول>أَمَّا زَيْدًا فَاقْتُلْهُ</قول>
      </مقطع>
       <مقطع رقم="٢٥">وَ<قول>أَمَّا عَمْرًا فَاْشْتِرِ لَهُ ثَوْبًا</قول>
      </مقطع>
       <مقطع رقم="٢٦">وَ<قول>أَمَّا خَالِدًا فَلَا تَشْتِمْ أَبَاهُ</قول>
      </مقطع>
       <مقطع رقم="٢٧">وَ<قول>أَمَّا بَكْرًا فَلَا تَمْرُرْ بِهِ</قول>
      </مقطع>
       <مقطع رقم="٢٨">وَمِنْهُ <قول>زَيْدًا لِيَضْرِبْهُ عَمْرٌو</قول>
      </مقطع>
       <مقطع رقم="٢٩">وَ<قول>بِشْرًا لِيَقْتُلْ أَبَاهُ بَكْرٌ</قول>
      </مقطع>
       <مقطع رقم="٣٠">لِأَنَّهُ أَمْرٌ لِلْغَاْئِبِ</مقطع>
       <مقطع رقم="٣١">بِمَنْزِلَةِ  <حرف>ٱفْعَلْ</حرف> لِلْمُخَاْطَبِ</مقطع>
       <مقطع رقم="٣٢">وَقَدْ يَكُوْنُ فِي الْأَمْرِ وَالنَّهْيِ</مقطع>
       <مقطع رقم="٣٣">أَنْ يُبْنَى الْفِعْلُ عَلَى الٱسْمِ</مقطع>
       <مقطع رقم="٣٤">وَذٰلِكَ قَوْلُكَ <قول>عَبْدُ اللّٰهِ ٱضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٣٥">ابْتَدَأْتَ  <حرف>عَبْدَ اللّٰهِ</حرف>
      </مقطع>
       <مقطع رقم="٣٦">فَرَفَعْتَهُ بِالِابْتِدَاْءِ</مقطع>
       <مقطع رقم="٣٧">وَنَبَّهْتَ الْمُخَاْطَبَ لَهُ</مقطع>
       <مقطع رقم="٣٨">لِيَعْرِفَهُ بِٱسْمِهِ</مقطع>
       <مقطع رقم="٣٩">ثُمَّ بَنَيْتَ الْفِعْلَ عَلَيْهِ</مقطع>
       <مقطع رقم="٤٠">كَمَا فَعَلْتَ ذٰلِكَ فِي الْخَبَرِ</مقطع>
       <مقطع رقم="٤١">وَمِثْلُ ذٰلِكَ <قول>أَمَّا زَيْدٌ فَاقْتُلْهُ</قول>
      </مقطع>
       <مقطع رقم="٤٢">فَإِذَا قُلْتَ <قول>زَيْدٌ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٤٣">لَمْ يَسْتَقِمْ أَنْ تَحْمِلَهُ عَلَى الِابْتِدَاْءِ</مقطع>
       <مقطع رقم="٤٤">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول>زَيْدٌ فَمُنْطَلِقٌ</قول>
      </مقطع>
       <مقطع رقم="٤٥">لَمْ يَسْتَقِمْ</مقطع>
       <مقطع رقم="٤٦">فَهُوَ دَلِيْلٌ عَلَى أَنَّهُ</مقطع>
       <مقطع رقم="٤٧">لَا يَجُوْزُ أَنْ يَكُوْنَ مُبْتَدَأً</مقطع>
       <مقطع رقم="٤٨">فَإِنْ شِئْتَ</مقطع>
       <مقطع رقم="٤٩">نَصَبْتَهُ عَلَى شَئٍ هٰذَا تَفْسِيْرُهُ</مقطع>
       <مقطع رقم="٥٠">كَمَا كَانَ ذٰلِكَ فِي الِاسْتِفْهَامِ</مقطع>
       <مقطع رقم="٥١">وَإِنْ شِئْتَ</مقطع>
       <مقطع رقم="٥٢">عَلَى  <حرف>عَلَيْكَ</حرف>
      </مقطع>
       <مقطع رقم="٥٣">كَأَنَّكِ قُلْتَ <قول>عَلَيْكَ زَيْدًا فَاقْتُلْهُ</قول>
      </مقطع>
       <مقطع رقم="٥٤">وَقَدْ يَحْسُنُ وَيَسْتَقِيْمُ</مقطع>
       <مقطع رقم="٥٥">أَنْ تَقُوْلَ <قول>عَبْدُ اللّٰهِ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٥٦">إِذَا كَانَ مَبْنِيًّا</مقطع>
       <مقطع رقم="٥٧">عَلَى مُبْتَدَإٍ مُظْهَرٍ أَوْ مُضْمَرٍ</مقطع>
       <مقطع رقم="٥٨">فَأَمَّا فِي الْمُظْهَرِ</مقطع>
       <مقطع رقم="٥٩">فَقَوْلُكَ <قول>هٰذَا زَيْدٌ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٦٠">وَإِنْ شِئْتَ</مقطع>
       <مقطع رقم="٦١">لَمْ تُظْهِرْ  <حرف>هٰذَا</حرف>
      </مقطع>
       <مقطع رقم="٦٢">وَيَعْمَلُ كَعَمَلِهِ إِذَا أَظْهَرْتَهُ</مقطع>
       <مقطع رقم="٦٣">وَذٰلِكَ قَوْلُكَ <قول>الْهِلَالُ وَاللّٰهِ فَانْظُرْ إِلَيْهِ</قول>
      </مقطع>
       <مقطع رقم="٦٤">كَأَنَّكَ قُلْتَ <قول>هٰذَا الْهِلَالُ</قول>
      </مقطع>
       <مقطع رقم="٦٥">ثُمَّ جِئْتَ بِالْأَمْرِ</مقطع>
       <مقطع رقم="٦٦">وَمِمَّا يَدُلُّكَ عَلَى حُسْنِ الْفَاْءِ هٰهُنَا</مقطع>
       <مقطع رقم="٦٧">أَنَّكَ لَوْ قُلْتَ <قول>هٰذَا زَيْدٌ فَحَسَنٌ جَمِيْلٌ</قول>
          <هارون مجلد="١" صفحة="١٣٨"/>كَانَ كَلَامًا جَيِّدًا</مقطع>
       <مقطع رقم="٦٨">وَمِنَ ذٰلِكَ قَوْلُ الشَّاْعِرِ</مقطع>
       <شاهدة رقم="١" xml:id="٣٣-١">
          <بيت>
             <مصراع>وَقَاْئِلَةٍ خَوْلانُ فَانْكِحْ فَتَاْتَهُمْ</مصراع>
             <مصراع>وَأُكْرومَةُ الْحَيَّيْنِ خِلْوٌ كَمَا هِيَا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع رقم="٦٩">
          <بَدَل>
             <يع>فَهٰذَا</يع>
             <بكاْ>هَكَذَا</بكاْ>
         </بَدَل> سُمِعَ مِنَ الْعَرَبِ تُنْشِدُهُ</مقطع>
       <مقطع رقم="٧٠">وَتَقُوْلُ <قول>هٰذَا الْرَّجُلَ فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٧١">إِذَا جَعَلْتَهُ وَصْفًا</مقطع>
       <مقطع رقم="٧٢">وَلَمْ تَجْعَلْهُ خَبَرًا</مقطع>
       <مقطع رقم="٧٣">وَكَذٰلِكَ <قول>هٰذَا زَيْدًا فَاْضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٧٤">إِذَا كَانَ مَعْطُوفًا عَلَى  <حرف>هٰذَا</حرف>  أَوْ بَدَلًا</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٧٥">وَتَقُوْلُ <قول>اللَّذَيْنِ يَأْتِيَانِكِ فَاْضْرِبْهُمَا</قول>
      </مقطع>
       <مقطع رقم="٧٦">تَنْصِبُهُ كَمَا تَنْصِبُ  <حرف>زَيْدًا</حرف>
      </مقطع>
       <مقطع رقم="٧٧">وَإِنْ شِئْتَ</مقطع>
       <مقطع رقم="٧٨">رَفَعْتَهُ عَلَى أَنَّ يَكُوْنَ مَبْنِيًّا عَلَى مُظْهَرٍ أَوْ مُضْمَرٍ</مقطع>
       <مقطع رقم="٧٩">وَإِنْ شِئْتَ</مقطع>
       <مقطع رقم="٨٠">كَانَ مُبْتَدَأً</مقطع>
       <مقطع رقم="٨١">لِأَنَّهُ يَسْتَقِيْمُ أَنْ تَجْعَلَ خَبَرَهُ مِنْ غَيْرِ الْأَفْعَالِ بِالْفَاْءِ</مقطع>
       <مقطع رقم="٨٢">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول>الَّذِيْ يَأْتِيْنِي فَلَهُ دِرْهَمٌ</قول>
      </مقطع>
       <مقطع رقم="٨٣">وَ<قول>الَّذِي يَأْتِيْنِي فَمُكْرَمٌ مَحْمُوْدٌ</قول>
      </مقطع>
       <مقطع رقم="٨٤">كَانَ حَسَنًا</مقطع>
       <مقطع رقم="٨٥">وَلَوْ قُلْتَ <قول>زَيْدٌ فَلَهُ دِرْهَمٌ</قول>
      </مقطع>
       <مقطع رقم="٨٦">لَمْ يَجُزْ</مقطع>
       <مقطع رقم="٨٧">وَإِنَّمَا جَاْزَ ذٰلِكَ</مقطع>
       <مقطع رقم="٨٨">لِأَنَّ قَوْلَهُ <قول>الَّذِيْ يَأْتِيْنِيْ فَلَهُ دِرِهُمٌ</قول>
      </مقطع>
       <مقطع رقم="٨٩">فَِي <هارون مجلد="١" صفحة="١٣٩"/>مَعْنَى الْجَزَاْءِ</مقطع>
       <مقطع رقم="٩٠">فَدَخَلَتْ الْفَاْءُ فِي خَبَرِهِ</مقطع>
       <مقطع رقم="٩١">كَمَا تَدْخُلُ فِي خَبَرِ الْجَزَاْءِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٩٢">وَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
       <مقطع رقم="٩٣">
           <آية>الَّذِيْنَ يُنْفِقُوْنَ أَمْوَالَهُمْ بِاللَّيْلِ وَالنَّهَاْرِ سِرًا وَعَلَانِيَةً فَلَهُمْ أَجْرُهُمْ عِنْدَ رَبَّهِمْ وَلَا خَوْفٌ عَلَيْهِمْ وَلَا هُمْ يَحْزَنُوْنَ</آية>
      </مقطع>
       <مقطع رقم="٩٤">وَمِنَ ذٰلِكَ قَوْلُهُمْ <قول>كُلُّ رَجُلٍ يَأْتِيكَ فَهُوَ صَالِحٌ</قول>
      </مقطع>
       <مقطع رقم="٩٥">وَ<قول>كُلُّ رَجُلٍ جَاْءَ فَلَهُ دِرْهَمَانِ</قول>
      </مقطع>
       <مقطع رقم="٩٦">لِأَنَّ مَعْنَى الْحَدِيْثِ الْجَزَاْءُ</مقطع>
       <مقطع رقم="٩٧">وَأَمَّا قَوْلُ عُدَىْ بْنِ زَيْدٍ</مقطع>
       <شاهدة رقم="٢" xml:id="٣٣-٢">
          <بيت>
             <مصراع>أَرَوَاْحٌ مُوَدِّعٌ أَمْ بُكُوْرُ</مصراع>
             <مصراع>أَنْتَ فَانْظُرْ لِأَيْ ذَاكَ تَصِيْرُ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="١٤٠"/>
       <مقطع رقم="٩٨">فَإِنَّهُ عَلَى أَنَّ يَكُوْنَ فِي الَّذِي يَرْفَعُ عَلَى {حَاْلِ} حَالَةِ الْمَنْصُوْبِ فِي النَّصْبِ</مقطع>
       <مقطع رقم="٩٩">[يَعْنِي أَنَّ الَّذِىْ مِنْ سَبَبِهِ مَرْفُوْعٌ فَتَرْفَعُهُ بِفِعْلٍ هٰذَا يُفَسَّرَهُ</مقطع>
       <مقطع رقم="١٠٠">كَمَا كَانَ الْمَنْصُوْبُ مَا هُوَ مِنْ سَبَبِهِ يَنْتَصِبُ</مقطع>
       <مقطع رقم="١٠١">فَيَكُوْنُ مَا سَقَطَ عَلَى سَببَيِّهِ تَفْسِيْرُهُ]</مقطع>
       <مقطع رقم="١٠٢">فَِي الَّذِىْ يَنْصِبُ عَلَى أَنَّهُ شِئٌ هٰذَا تَفْسِيْرُهُ</مقطع>
       <مقطع رقم="١٠٣">يَقُوْلُ تَرْفَعُ  <حرف>أَنْتَ</حرف>
      </مقطع>
       <مقطع رقم="١٠٤">عَلَى فِعْلٍ مُضْمَرٍ</مقطع>
       <مقطع رقم="١٠٥">لِأَنَّ الَّذِىْ مِنْ سَبَبِهِ مَرْفُوْعٌ</مقطع>
       <مقطع رقم="١٠٦">وَهُوَ الِٱسْمُ الْمُضْمَرُ</مقطع>
       <مقطع رقم="١٠٧">الَّذِي فِي  <حرف>انْظُرْ</حرف>
      </مقطع>
       <مقطع رقم="١٠٨">وَقَدْ يَجُوْزُ أَنْ يَكُوْنَ  <حرف>أَنْتَ</حرف>
      </مقطع>
       <مقطع رقم="١٠٩">عَلَى قَوْلِهِ <قول>أَنْتَ الْهَالِكُ</قول>
      </مقطع>
       <مقطع رقم="١١٠">كَمَا يُقَالُ إِذَا ذُكِرَ إِنْسَانٌ لِشَئٍ</مقطع>
       <مقطع رقم="١١١">
          <قول>قَالَ النَّاْسُ زَيْدٌ</قول>
      </مقطع>
       <مقطع رقم="١١٢">وَ<قول>قَالَ النَّاْسُ أَنْتَ</قول>
      </مقطع>
       <مقطع رقم="١١٣">وَلَا يَكُوْنُ عَلَى أَنَّ تُضْمِرَ  <حرف>هٰذَا</حرف>
      </مقطع>
       <مقطع رقم="١١٤">لِأَنَّكَ لَا تُشِيْرُ لِلْمُخَاْطَبِ إِلَى نَفْسِهِ</مقطع>
       <مقطع رقم="١١٥">وَلَا تَحْتَاْجُ إِلَى ذٰلِكَ</مقطع>
       <مقطع رقم="١١٦">وَإِنَّمَا تُشِيْرُ لَهُ إِلَى غَيْرِهِ</مقطع>
       <مقطع رقم="١١٧">أَلَا تَرَى أَنَّكَ لَوْ أَشَرْتَ لَهُ إِلَى شَخْصِهِ</مقطع>
       <مقطع رقم="١١٨">فَقُلْتَ <قول>هٰذَا أَنْتَ</قول>
      </مقطع>
       <مقطع رقم="١١٩">لَمْ يَسْتَقِمْ</مقطع>
       <مقطع رقم="١٢٠">وَيَجُوْزُ هٰذَا أَيْضًا</مقطع>
       <مقطع رقم="١٢١">عَلَى قَوْلِكَ <قول>شَاهِدَاكَ</قول>
      </مقطع>
       <مقطع رقم="١٢٢">أَيْ <قول>مَا ثَبَتَ لَكَ شَاهِدَاكَ</قول>
      </مقطع>
       <مقطع رقم="١٢٣">قَالَ اللّٰهُ تَعَالَى جَدُّهُ</مقطع>
       <مقطع رقم="١٢٤">
           <آية>طَاْعَةٌ وَقَوْلٌ مَّعْرُوْفٌ</آية>
      </مقطع>
       <مقطع رقم="١٢٥">فَهُوَ مِثْلُهُ</مقطع>
       <مقطع رقم="١٢٦">فَإِمَّا أَنْ يَكُوْنَ أَضْمَرَ الٱسْمَ</مقطع>
       <مقطع رقم="١٢٧">وَجَعَلَ هٰذَا خَبَرَهُ</مقطع>
       <مقطع رقم="١٢٨">كَأَنَّهُ قَالَ <قول>أَمْرِي طَاْعَةٌ [وَقَوْلٌ مَّعْرُوْفٌ]</قول>
      </مقطع>
       <مقطع رقم="١٢٩">أَوْ يَكُوْنَ أَضْمَرَ الْخَبَرَ</مقطع>
       <مقطع رقم="١٣٠">فَقَالَ <قول>طَاْعَةٌ وَقَوْلٌ مَّعْرُوْفٌ أَمْثَلُ</قول>
      </مقطع>
       <هارون مجلد="١" صفحة="١٤١"/>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٣١">وَاْعْلَمْ أَنَّ الدُّعَاْءَ</مقطع>
       <مقطع رقم="١٣٢">بِمَنْزِلَةِ الْأَمْرِ وَالنَّهْيِ</مقطع>
       <مقطع رقم="١٣٣">وَإِنَّمَا قِيلَ  <حرف>دُعَاْءٌ</حرف>
      </مقطع>
       <مقطع رقم="١٣٤">لِأَنَّهُ اسْتُعْظِمَ أَنْ يُقَالَ أَمْرٌ أَوْ نَهْيٌ</مقطع>
       <مقطع رقم="١٣٥">وَذٰلِكَ قَوْلُكَ <قول>اللّٰهُمَّ زَيْدًا فَاْغْفِرْ ذَنْبَهُ</قول>
      </مقطع>
       <مقطع رقم="١٣٦">وَ<قول>زَيْدًا فَأَصْلِحْ شَأْنَهُ</قول>
      </مقطع>
       <مقطع رقم="١٣٧">
          <قول>وَعَمْرًا لِيَجْزِهِ اللّٰهُ خَيْرًا</قول>
      </مقطع>
       <مقطع رقم="١٣٨">وَتَقُوْلُ <قول>زَيْدًا قَطَعَ اللّٰهُ يَدَهُ</قول>
      </مقطع>
       <مقطع رقم="١٣٩">وَ<قول>زَيْدًا أَمَرَّ اللّٰهُ عَلَيْهِ الْعَيْشَ</قول>
      </مقطع>
       <مقطع رقم="١٤٠">لِأَنَّ مَعْنَاهُ مَعْنَى <قول>زَيْدًا لِيَقْطَعِ الَلَّهُ يَدَهُ</قول>
      </مقطع>
       <مقطع رقم="١٤١">وَقَالَ أَبُوْ الْأَسْوَدِ الْدُّؤَلِىُّ</مقطع>
       <شاهدة رقم="٣" xml:id="٣٣-٣">
          <بيت>
             <مصراع>أَمِيْرَانِ كَانَا آخِيَانّىْ كِلَاهُمَا</مصراع>
             <مصراع>فَكُلِا جَزَاهُ اللّٰهُ عَنِّىْ بِمَا فَعَلْ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٤٢">وَيَجُوْزُ فِيْهِ مِنْ الرَّفْعِ</مقطع>
       <مقطع رقم="١٤٣">مَا جَاْزَ فِي الْأَمْرِ وَالنَّهّيِ</مقطع>
       <مقطع رقم="١٤٤">وَيَقْبُحُ فِيْهِ</مقطع>
       <مقطع رقم="١٤٥">مَا يَقْبُِحُ فِي الْأَمْرِ وَالنَّهْيِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٤٦">وَتَقُوْلُ <قول>أَمَّا زَيْدًا فَجَدَعًا لَهُ</قول>
      </مقطع>
       <مقطع رقم="١٤٧">وَ<قول>أَمَّا عَمْرًا فَسَقْيًا لَهُ</قول>
      </مقطع>
       <مقطع رقم="١٤٨">لِأَنَّكَ لَوْ أَظْهَرْتَ</مقطع>
       <مقطع رقم="١٤٩">الَّذِىْ انْتَصَبَ عَلَيْهِ  <حرف>سَقْيًا</حرف>  وَ<حرف>جَدَعًا</حرف>
      </مقطع>
       <مقطع رقم="١٥٠">لَنَصَبْتَ  <حرف>زَيْدًا</حرف>  وَ<حرف>عَمْرًا</حرف>
      </مقطع>
       <مقطع رقم="١٥١">فَإِضْمَاْرُهُ بِمَنْزِلَةِ إِظْهَاْرِهِ</مقطع>
       <مقطع رقم="١٥٢">كَمَا تَقُوْلُ <قول>أَمَّا زَيْدًا فَضَرْبًا</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٥٣">وَتَقُوْلُ <قول>أَمَّا زَيْدٌ فَسَلَامٌ عَلَيْهِ</قول>
      </مقطع>
       <مقطع رقم="١٥٤">وَ<قول>أَمَّا الْكَافِرُ فَلَعْنَةُ اللّٰهِ عَلَيْهِ</قول>
      </مقطع>
       <مقطع رقم="١٥٥">لِأَنَّ هٰذَا ارْتَفَعَ بِالِابْتِدَاْءِ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٥٦">وَأَمَّا قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
       <مقطع رقم="١٥٧">
          <آية ص="نور" آ="٢">الزَّانِيَةُ وَالزَّانِي فَاْجْلِدُوْا كُلَّ وَاْحِدٍ مِنْهُمَا مِائَةَ جَلْدَةٍ</آية>
      </مقطع>
       <مقطع رقم="١٥٨">وَقَوْلُهُ تَعَالَى</مقطع>
       <مقطع رقم="١٥٩">
          <آية ص="الْماْئدَة" آ="٣٨">وَالسَّاْرِقُ وَالسَّاْرِقَةُ فَاقْطَعُوَا أَيْدِيَهُمَا</آية>
      </مقطع>
       <مقطع رقم="١٦٠">فَإِنَّ <هارون مجلد="١" صفحة="١٤٢"/>هٰذَا لَمْ يُبْنَ عَلَى الْفِعْلِ</مقطع>
       <مقطع رقم="١٦١">وَلَكِنَّهُ جَاْءَ عَلَى مِثْلِ قَوْلِهِ تَعَالَىْ</مقطع>
       <مقطع رقم="١٦٢">
          <آية ص="محَمْد" آ="١٥">مَثَلُ الْجَنَّةِ الَّتِي وَُعِدَ الْمُتَّقُوْنَ</آية>
      </مقطع>
       <مقطع رقم="١٦٣">ثُمَّ قَالَ بَعْدُ</مقطع>
       <مقطع رقم="١٦٤">
          <آية ص="محَمْد" آ="١٥">فَِيْهَا أَنْهَاْرٌ مِنْ مَاْءٍ</آية>
      </مقطع>
       <مقطع رقم="١٦٥">فَِيْهَا كَذَا وَكَذَا</مقطع>
       <مقطع رقم="١٦٦">فَإِنَّمَا وَُضِعَ الْـ<حرف>مَثَلُ</حرف>
      </مقطع>
       <مقطع رقم="١٦٧">لِلْحَدِيْثِ الَّذِىْ بَعْدَهُ</مقطع>
       <مقطع رقم="١٦٨">فَذَكَرَ أَخْبَاْرًا وَأَحَاْدِيْثَ</مقطع>
       <مقطع رقم="١٦٩">فَكَأَنَّهُ قَالَ <قول>وَمِنَ الْقَصَصِ مَثَلُ الْجَنَّةِ</قول>
      </مقطع>
       <مقطع رقم="١٧٠">أَوْ <قول>مِمَّا يُقَصُّ عَلَيْكُمْ مَثَلُ الْجَنَّةِ</قول>
      </مقطع>
       <مقطع رقم="١٧١">فَهُوَ مَحْمُوْلٌ عَلَى هٰذَا الْإِضْمَاْرِ وَنَحْوِهِ</مقطع>
       <مقطع رقم="١٧٢">وَاللّٰهُ تَعَالَىْ أَعْلَمُ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٧٣">وَكَذٰلِكَ  <حرف>الزَّانِيَةُ وَالزَّانِي</حرف>
      </مقطع>
       <مقطع رقم="١٧٤">كَأَنَّهُ لَمَّا قَالَ جَلَّ ثَنَاْؤُهُ</مقطع>
       <مقطع رقم="١٧٥">
          <آية ص="نور" آ="١">سُوْرَةٌ أَنْزَلْنَاهَا وَفَرَضْنَاهَا</آية>
      </مقطع>
       <مقطع رقم="١٧٦">قَالَ <قول>فَِي الْفَرَاْئِضِ الزَّانِيَةُ وَالزَّانِي</قول>
      </مقطع>
       <مقطع رقم="١٧٧">أَوْ <قول>الزَّانِيَةُ وَالزَّانِي فِي الْفَرَاْئِضِ</قول>
      </مقطع>
       <مقطع رقم="١٧٨">ثُمَّ قَالَ  <حرف>فَاْجْلِدُوْا</حرف>
      </مقطع>
       <مقطع رقم="١٧٩">فَجَاْءَ بِالْفِعْلِ</مقطع>
       <مقطع رقم="١٨٠">بَعْدَ أَنَ مَضَىْ فِيْهِمَا الرَّفْعُ</مقطع>
       <مقطع رقم="١٨١">كَمَا قَالَ</مقطع>
       <شاهدة رقم="٤" xml:id="٣٣-٤">
          <بيت>
             <مصراع>وَقَاْئِلَةِ خَوْلانُ فَانْكِحْ فَتَاْتَهُمْ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٨٢">فَجَاْءَ بِالْفِعْلِ</مقطع>
       <مقطع رقم="١٨٣">بَعْدَ أَنْ عَمِلَ فِيْهِ الْمُضْمَرُ</مقطع>
       <مقطع رقم="١٨٤">وَكَذٰلِكَ  <حرف>وَالسَّاْرِقُ وَالسَّاْرِقَةُ</حرف>
      </مقطع>
       <مقطع رقم="١٨٥">كَأَنَّهُ قَالَ <قول>وَفِيْمَا فَرَضَ اللّٰهُ عَلَيْكُمْ السَّاْرِقُ وَالسَّاْرِقَةُ</قول>
      </مقطع>
       <مقطع رقم="١٨٦">أَوْ <قول>السَّاْرِقُ وَالسَّاْرِقَةُ فِيْمَا فُرِضَ عَلَيْكُمْ</قول>
      </مقطع>
       <مقطع رقم="١٨٧">فَإِنَّمَا دَخَلَتْ هَذِهِ الْأَسْمَاْءُ</مقطع>
       <مقطع رقم="١٨٨">بَعْدَ قِصَصٍ وَأَحَاْدِيْثَ</مقطع>
       <مقطع رقم="١٨٩">وَيُحْمَلُ عَلَى نَحْوٍ مِنْ هٰذَا</مقطع>
       <مقطع رقم="١٩٠">وَمِثْلُ ذٰلِكَ <آية ص="النساْء" آ="١٦">وَاللَّذانِ يَأْتِيَانِهَا مِنْكُمْ فَآذُوهُمَا</آية>
      </مقطع>
       <هارون مجلد="١" صفحة="١٤٣"/>
       <مقطع رقم="١٩١">وَقَدْ يَجْرِي هٰذَا فِي  <حرف>زَيْدٍ</حرف>  وَ<حرف>عَمْروٍ</حرف>
      </مقطع>
       <مقطع رقم="١٩٢">عَلَى هٰذَا الْحَدِّ</مقطع>
       <مقطع رقم="١٩٣">إِذَا كُنْتَ تُخْبِرُ بِأَشْيَاْءَ أَوْ تُوْصِي</مقطع>
       <مقطع رقم="١٩٤">ثُمَّ تَقُوْلُ <قول>زَيْدٌ</قول>
      </مقطع>
       <مقطع رقم="١٩٥">أَيْ <قول>زَيْدٌ فِيْمَنْ أُوْصِيَ بِهِ فَأَحْسِنْ إِلَيْهِ وَأَكْرِمْهُ</قول>
      </مقطع>
       <مقطع رقم="١٩٦">وَقَدْ قَرَأَ أَنَاْسٌ</مقطع>
       <مقطع رقم="١٩٧">
          <آية ص="الْماْئدَة" آ="٣٨">وَالسَّاْرِقَ وَالسَّاْرِقَةَ</آية>
      </مقطع>
       <مقطع رقم="١٩٨">وَ<آية ص="نور" آ="٢">الزَّانِيَةَ وَالزَّانِي</آية>
      </مقطع>
       <مقطع رقم="١٩٩">وَهُوَ فِي الْعَرَبِيَّةِ</مقطع>
       <مقطع رقم="٢٠٠">عَلَى مَا ذَكَرْتُ لَكَ مِنْ الْقُوَّةِ</مقطع>
       <مقطع رقم="٢٠١">وَلَكِنْ أَبَتِ الْعَامَّةُ</مقطع>
       <مقطع رقم="٢٠٢">إِلَّا الْقِرَاْءَةَ بِالرَّفْعِ</مقطع>
