    <فقرة>
       <مقطع رقم="٢٠٣">وَإِنَّمَا كَانَ الْوَجْهُ فِي الْأَمْرِ وَالنَّهْيِ النَّصْبُ</مقطع>
       <مقطع رقم="٢٠٤">لِأَنَّ حَدَّ الْكَلَامِ تَقْدِيْمُ الْفِعْلِ</مقطع>
       <مقطع رقم="٢٠٥">وَهُوَ فِيْهِ أَوْجَبُ</مقطع>
       <مقطع رقم="٢٠٦">إِذْ كَانَ ذٰلِكَ يَكُوْنُ فِي أَلْفِ الِاسْتِفْهَامِ</مقطع>
       <مقطع رقم="٢٠٧">لِأَنَّهُمَا لَا يَكُوْنَانِ إِلَّا بِفِعْلٍ</مقطع>
       <مقطع رقم="٢٠٨">وَقَبُحَ تَقْدِيْمُ الِٱسْمِ فِي سَاْئِرِ الْحُرُوْفِ</مقطع>
       <مقطع رقم="٢٠٩">لِأَنَّهَا حُرُوْفٌ تَحْدُثُ قَبْلَ الْفِعْلِ</مقطع>
       <مقطع رقم="٢١٠">وَقَدْ يَصِيْرُ مَعْنَى حَدِيْثِهِنَّ إِلَى الْجَزَاْءِ</مقطع>
       <مقطع رقم="٢١١">وَالْجَزَاْءً لَا يَكُوْنُ إِلَّا خَبَرًا</مقطع>
       <مقطع رقم="٢١٢">وَقَدْ يَكُوْنُ فِيْهِنَّ الْجَزَاْءُ فِي الْخَبَرِ</مقطع>
       <مقطع رقم="٢١٣">وَهْى غَيْرُ وَاْجِبَةٍ كَحُرُوفِ الْجَزَاْءِ</مقطع>
       <مقطع رقم="٢١٤">فَأُجْرِيَتْ مُجْرَاهَا</مقطع>
       <مقطع رقم="٢١٥">وَالْأَمْرُ لَيْسَ يَحْدُثُ لَهُ حَرْفٌ</مقطع>
       <مقطع رقم="٢١٦">سِوَىْ الْفِعْلِ</مقطع>
       <مقطع رقم="٢١٧">فَيُضَاْرِعُ حُرُوْفَ الْجَزَاْءِ</مقطع>
       <مقطع رقم="٢١٨">فَيَقْبُحُ حَذْفُ الْفِعْلِ مِنْهُ</مقطع>
       <مقطع رقم="٢١٩">كَمَا يَقْبُحُ حَذْفُ الْفِعْلِ</مقطع>
       <مقطع رقم="٢٢٠">بَعْدَ حُرُوْفِ الْجَزَاْءِ</مقطع>
       <مقطع رقم="٢٢١">وَإِنَّمَا يَقْبُحُ حَذْفُ الْفِعْلِ وَإِضْمَاْرُهُ</مقطع>
       <مقطع رقم="٢٢٢">بَعْدَ حُرُوْفِ الِاسْتِفْهَامِ</مقطع>
       <مقطع رقم="٢٢٣">لِمُضَاْرَعْتِهَا حُرُوْفَ الْجَزَاْءِ</مقطع>
       <مقطع رقم="٢٢٤">وَإِنَّمَا قُلْتَ <قول>زَيْدًا ٱِضْرِبْهُ</قول>
      </مقطع>
       <مقطع رقم="٢٢٥">وَ<حرف>ٱضْرِبْهُ</حرف>  مَشْغُوْلَةٌ بِالْهَاْءِ</مقطع>
       <مقطع رقم="٢٢٦">لِأَنَّ الْأَمْرَ وَالنَّهْيَ</مقطع>
       <مقطع رقم="٢٢٧">لَا يَكُوْنَانِ إِلَّا بِالْفِعْلِ</مقطع>
       <مقطع رقم="٢٢٨">فَلَا يُسْتَغْنَى عَنِ الْإِضْمَاْرِ</مقطع>
       <مقطع رقم="٢٢٩">إِنْ لَمْ يَظْهَرْ</مقطع>
       <هارون مجلد="١" صفحة="١٤٤"/>
   </فقرة>
</باب>
