<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨"
     درنبورج="١-٧"
     هارون="١-٢٥"
     يعقوب="١-٥٢"
     البكاء="١-٧٢"
     رقم="٦">

  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ الاِسْتِقَامَةِ مِنَ الْكَلَامِ وَالْإِحَالَةِ</مقطع>
  </عنوان>
  <مقطع رقم="٢">فَمِنْهُ</مقطع>
  <مقطع رقم="٣">مُسْتَقِيمٌ حَسَنٌ</مقطع>
  <مقطع رقم="٤">وَمُحَالٌ</مقطع>
  <مقطع رقم="٥">وَمُسْتَقِيمٌ كَذِبٌ</مقطع>
  <مقطع رقم="٦">وَمُسْتَقِيمٌ قَبِيحٌ</مقطع>
  <مقطع رقم="٧"> وَمَا هُوَ مُحَالٌ كَذِبٌ</مقطع>
  <مقطع رقم="٨">فَأَمَّا <ص><مادة>قيم</مادة><مادة>كذب</مادة>
  <متن>الْمُسْتَقِيمُ الْحَسَنُ</متن>
</ص>
  </مقطع>
  <مقطع رقم="٩">فَقَوْلُكَ  <قول>أَتَيْتُكَ أَمْسِ</قول>
  </مقطع>
  <مقطع رقم="١٠"> و<قول>سَآتِيْكَ غَدًا</قول>
  </مقطع>
  <مقطع رقم="١١">وأَمَّا <ص><مادة>حول</مادة>
  <متن>مُحَالٌ</متن>
</ص>
  </مقطع>
  <مقطع رقم="١٢">فَأَنْ تَنْقُضَ أَوَّلَ كَلَامِكَ بِآخِرِهِ</مقطع>
  <مقطع رقم="١٣">فَتَقُولَ  <قول>أَتَيْتُكَ غَدًا</قول>
  </مقطع>
  <مقطع رقم="١٤"> و<قول>سَآتِيكَ أَمْسِ</قول>
  <هارون مجلد="١" صفحة="٢٥"/>
  </مقطع>
  <مقطع رقم="١٥">وَأَمَّا <ص><مادة>قيم</مادة><مادة>كذب</مادة>
  <متن>الْمُسْتَقِيمُ الْكَذِبُ</متن>
</ص>
  </مقطع>
  <مقطع رقم="١٦">فَقَوْلُكَ  <قول>حَمَلْتُ الْجَبَلَ</قول>
  </مقطع>
  <مقطع رقم="١٧">و<قول>شَرِبْتُ مَاءَ الْبَحْرِ</قول>
  </مقطع>
  <مقطع رقم="١٨"> وَنَحْوُهُ</مقطع>
  <مقطع رقم="١٩">وَأَمَّا <ص><مادة>قيم</مادة><مادة>قبح</مادة>
  <متن>الْمُسْتَقِيمُ الْقَبِيحُ</متن>
</ص>
  </مقطع>
  <مقطع رقم="٢٠">فَأَنْ تَضَعَ اللَّفْظَ في غَيْرِ مَوْضِعِهِ</مقطع>
  <مقطع رقم="٢١">نَحْوُ قَوْلِكَ</مقطع>
  <مقطع رقم="٢٢">
    <قول>قَدْ زَيْدًا رَأَيْتُ</قول>
  </مقطع>
  <مقطع رقم="٢٣">و<قول>كَيْ زَيْدٌ يَأْتِيَكَ</قول>
  </مقطع>
  <مقطع رقم="٢٤"> وَأَشْباهُ هذا</مقطع>
  <مقطع رقم="٢٥">وَأَمَّا <ص><مادة>حيل</مادة><مادة>كذب</مادة>
  <متن>الْمُحَالُ الْكَذِبُ</متن>
</ص>
  </مقطع>
  <مقطع رقم="٢٦"> فَأَنْ تَقُولَ</مقطع>
  <مقطع رقم="٢٧">  <قول>سَوْفَ أَشْرَبُ مَاءَ الْبَحْرِ أَمْسِ</قول>
  </مقطع>
</باب>

