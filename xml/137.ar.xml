<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     هارون="٢-١٤١"
     يعقوب="٢-١٤١"
     البكاء="٣-٢١"
     رقم="١٣٧">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْب مَا يَحْسُن عَلَيْهِ السُّكُوْتُ فِي هٰذِهِ الأحَرْف الْخَمْسَة</مقطع>
   </عنوان>
    <مقطع رقم="٢">لإِضْمَاْرِكَ مَا يَكُوْنُ مُسْتَقَرًّا لَهَا وَمَوْضِعًا لَوْ أَظْهَرَتَهُ</مقطع>
    <مقطع رقم="٣">وَلَيْسَ هٰذَا الْمُضْمَرُ بِنَفْسِ الْمُظْهَرِ</مقطع>
    <مقطع رقم="٤">وَذٰلِكَ <قول>إِنَّ مَالًا</قول> وَ<قول>إِنَّ وَلَدًا</قول> وَ<قول>إِنَّ عَدَدًا</قول>
   </مقطع>
    <مقطع رقم="٥">أَيْ <قول>إِنَّ لَهُمْ مَالًا</قول> فَالَّذِي أَضْمَرْتَ  <حرف>لَهُمْ</حرف>
   </مقطع>
    <مقطع رقم="٦">وَيَقُوْلُ الرَّجُلُ لِلرَّجُلِ <قول>هَلْ لَكُمْ أَحَدٌ إِنَّ النَّاْس أَلْبٌ عَلَيْكَم</قول>
   </مقطع>
    <مقطع رقم="٧">فَيَقُوْلُ <قول>إِنَّ زَيْدًا</قول> وَ<قول>إِنَّ عَمْرًا</قول> أَيْ <قول>إِنَّ لَنَا</قول>
   </مقطع>
    <مقطع رقم="٨">وَقَاْلَ الْأَعْشَى</مقطع>
    <شاهدة رقم="١" xml:id="١٣٧-١">
       <بيت>
          <مصراع>إِنّ مَحَلًّا وَإِنّ مُرْتَحَلا</مصراع>
          <مصراع>وَإِنَّ فِي السَّفْر مَا مَضَى مَهَلا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٩">وَتَقُوْلُ <قول>إِنَّ غَيْرَهَا إِبْلًا وَشَاْءً</قول>
   </مقطع>
    <مقطع رقم="١٠">كَأَنَّهُ قَاْلَ <قول>إِنَّ لَنَا غَيْرُهُا إَبْلًا وَشَاْءً</قول> أَوْ <قول>عِنْدَنا غَيْرُهُا إِبْلًا وَشَاْءً</قول>
   </مقطع>
    <مقطع رقم="١١">فَالَّذِي يُضْمَرُ هٰذَا النَحْوُ وَمَا أَشْبَهَهُ</مقطع>
    <مقطع رقم="١٢">وَانْتَصَبَ الْـ<حرف>إِبْلُ</حرف>  وَالـ<حرف>شَّاْءُ</حرف>  كَانْتِصَاْبِ  <حرف>فَاْرِسٍ</حرف>  إِذَا قُلْتَ <قول>مَا فِي النَّاْسِ مِثْلَهُ فَاْرِسًا</قول>
   </مقطع>
    <هارون مجلد="٢" صفحة="١٤١"/>
    <مقطع رقم="١٣">وَمِثْلُ ذٰلِكَ قَوْل الشَّاْعِرِ</مقطع>
    <شاهدة رقم="٢" xml:id="١٣٧-٢">
       <بيت>
          <مصراع>يَا لَيْتَ أَيَّامَ الصِّبَا رَوَاْجِعَا</مصراع>
          <مصراع/>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٤">فَهٰذَا كَقَوْلِهِ <قول>أَلَا مَاْءَ بَاْرِدًا</قول>
   </مقطع>
    <مقطع رقم="١٥">كَأَنَّهُ قَاْلَ <قول>أَلَا مَاْءَ لَنَا بَاْرِدًا</قول>
   </مقطع>
    <مقطع رقم="١٦">وَكَأَنَّه قَاْلَ <قول>يَا لَيْتَ لَنَا أَيَّامَ الصِّبَا</قول>
   </مقطع>
    <مقطع رقم="١٧">وَكَأَنَّه قَاْلَ <قول>يَا لَيْتَ أَيَّامَ الصِّبَا أَقْبَلَتْ رَوَاْجِعَ</قول>
   </مقطع>
    <مقطع رقم="١٨">وَتَقُوْلُ <قول>إِنَّ قَرِيْبًا مِنْكَ زَيْدًا</قول> إِذَا جَعَلْتَ  <حرف>قَرِيْبًا مِنْكَ</حرف> مَوْضِعُهُ</مقطع>
    <مقطع رقم="١٩">وَإِذَا جَعَلْتَ الْأَوَّلَ هُوَ الْآخِرَ قُلْتَ <قول>إِنَّ قَرِيْبًا مِنْكَ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٢٠">وَتَقُوْلُ <قول>إِنَّ قَرِيْبًا مِنْكَ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٢١">وَالْوَجْهُ إِذَا أَرَدْتَ هٰذَا أَنْ تَقُوْلَ <قول>إِنَّ زَيْدًا قَرِيْبٌ مِنْكَ</قول> أَوْ  <حرف>بَعِيْدٌ مِنْكَ</حرف>
   </مقطع>
    <مقطع رقم="٢٢">لِأَنَّهُ اجْتَمَعَ مَعْرِفَةً وَنَكِرَةً</مقطع>
    <مقطع رقم="٢٣">وَقَاْلَ امْرُؤُ الْقَيْسِ</مقطع>
    <شاهدة رقم="٣" xml:id="١٣٧-٣">
       <بيت>
          <مصراع>وَإِنَّ شِفاْءً عَبْرَةٌ مُهْرَاْقَةٌ</مصراع>
          <مصراع>فَهَلْ عِنْدَ رَسْمٍ داْرِسٍ مِنْ مُعَوَّلِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="١٤٢"/>
    <مقطع رقم="٢٤">فَهٰذَا أَحْسَنُ لِأَنَّهُمَا نَكِرَةً</مقطع>
    <مقطع رقم="٢٥">وَإِنْ شِئْتَ قُلْتَ <قول>إِنَّ بَعِيْدًا مِنْكَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٢٦">وَقَلَّمَا يَكُوْنُ  <حرف>بَعِيْدًا مِنْكَ</حرف> ظَرْفًا</مقطع>
    <مقطع رقم="٢٧">وَإِنَّمَا قَلَّ هٰذَا لِأَنَّكَ لَا تَقُوْلُ ء <قول>إِنَّ بُعْدَكَ زَيْدًا</قول> وَتَقُوْلُ <قول>إِنَّ قُرْبَكَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٢٨">فَالدُّنُوُّ أَشَدُّ تَمَكُّنًا فِي الظَرْفِ مِنَ الْبُعْدِ</مقطع>
    <مقطع رقم="٢٩">وَزَعَمَ يُوْنُسُ أَنَّ الْعَرَبَ تَقُوْلُ <قول>إِنَّ بَدَلَكَ زَيْدًا</قول> أَيْ <قول>إِنَّ مَكَاْنَكَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٣٠">وَالدَلِيْلُ عَلَى هٰذَا قَوْلُ الْعَرَبِ <قول>هٰذَا لَكَ بَدَلَ هٰذَا</قول> أَيْ <قول>هٰذَا لَكَ مَكَاْنَ هٰذَا</قول>
   </مقطع>
    <مقطع رقم="٣١">وَإِنْ جَعَلْتَ الْبَدَل بِمَنْزِلَةِ الْبديل قُلْتَ <قول>إِنَّ بَدَلَكَ زَيْدٌ</قول> أَيْ <قول>إِنَّ بَدِيْلَكَ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٣٢">وَتَقُوْلُ <قول>إِنَّ أَلْفًا فِي دَرَاْهِمِكَ بِيْضٌ</قول> وَ<قول>إِنَّ فِي دَرَاْهِمِكَ أَلْفًا بِيْضٌ</قول>
   </مقطع>
    <مقطع رقم="٣٣">فَهٰذَا يَجْرِي مَجْرَى النَّكِرَةِ فِي  <حرف>كَاْنَ</حرف>  وَ<حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٣٤">لِأنَّ الْمُخَاْطَبَ يَحْتَاْجُ إِلَى أَنْ تُعْلِمَهُ هٰهُنَا</مقطع>
    <مقطع رقم="٣٥">كَمَا يَحْتَاْجُ إِلَى أَنْ تُعْلِمَهُ فِي قَوْلِكَ <قول>مَا كَاْنَ أَحَدٌ فِيْهَا خَيْرًا مِنْكَ</قول>
   </مقطع>
    <مقطع رقم="٣٦">وَإِنْ شِئْتَ جَعَلْتَ  <حرف>فِيْهَا</حرف>  مُسْتَقَرًّا وَجَعَلْتَ الْـ<حرف>بيض</حرف> صِفَةً</مقطع>
    <مقطع رقم="٣٧">وَٱعْلَمْ أَنَّ التَّقْدِيْمَ والتَّأْخِيْرَ وَالْعِنَاْيَةَ وَالِاهْتِمَاْمَ هُنَا مِثْلَهُ فِي بَاْبِ  <حرف>كَاْنَ</حرف>
   </مقطع>
    <مقطع رقم="٣٨">وَمِثْلُ ذٰلِكَ قَوْلُكَ <قول>إِنَّ أَسَدًا فِي الطَّرِيْقِ رَاْبِضًا</قول> وَ<قول>إِنَّ بِالطَّرِيْقَ أَسَدًا رَاْبِضٌ</قول>
   </مقطع>
    <مقطع رقم="٣٩">وَإِنْ شِئْتَ جَعَلْتَ بـ<حرف>الطريق</حرف>  مُسْتَقَرًّا ثُمَّ وَصَفْتَهُ بالـ<حرف>رَّاْبِضِ</حرف>
   </مقطع>
    <مقطع رقم="٤٠">فَهٰذَا يَجْرِي هُنَا مَجْرَى مَا ذَكَرْتُ مِنَ النَّكِرَةِ فِي بَاْبِ  <حرف>كَاْنَ</حرف>
   </مقطع>
    <هارون مجلد="٢" صفحة="١٤٣"/>
</باب>
