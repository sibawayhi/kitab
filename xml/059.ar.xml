<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="٥٩">
    <عنوان>
       <مقطع رقم="١"> هٰذَا بَاْبُ مَعْنَى الْوَاْو فِيْهِ كمَعْنَاْهَا فِي الْبَاْبِ الْأَوَّلِ</مقطع>
   </عنوان>
    <مقطع رقم="٢"> إِلَّا أَنَّهَا تَعْطِفُ الِاسْمَ هُنَا عَلَى مَا لَا يَكُوْنُ مَا بَعْدَهُ إِلَّا رَفْعًا عَلَى كُلِّ حَاْل</مقطع>
    <مقطع رقم="٣"> وَذٰلِكَ قَوْلُكَ <قول> أَنْتَ وَشَأْنُكَ</قول>
   </مقطع>
    <مقطع رقم="٤"> وَ<قول> كُلُّ رَجُل وَضَيْعتُه</قول>
   </مقطع>
    <مقطع رقم="٥"> وَ<قول> مَا أَنْتَ وَعَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٦"> وَ<قول> كَيْفَ أَنْتَ وَقَصْعَةٌ مِنْ ثَريَدٍ</قول>
   </مقطع>
    <مقطع رقم="٧"> وَ<قول> مَا شَأْنُكَ وَشَأْنُ زَيْد</قول>
   </مقطع>
    <مقطع رقم="٨"> وَقَاْلَ المُخَبَّل</مقطع>
    <شاهدة رقم="١" xml:id="٥٩-١">
       <بيت>
          <مصراع> يَاْزبْرِقَاْنُ أَخا بني خَلَفٍ</مصراع>
          <مصراع> مَا أَنْتَ وَيْبَ أبيك وَالفَخْرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٩"> وَقَاْلَ جَميل</مقطع>
    <شاهدة رقم="٢" xml:id="٥٩-٢">
       <بيت>
          <مصراع> وَأَنْتَ امرؤٌ مِنْ أهَلْ نَجْدٍ وَأهَلُْنَاْ</مصراع>
          <مصراع> تَهَاْمٍ فَمَا النَّجْدىُّ وَالمتغوَّرُ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٢٩٩"/>
    <مقطع رقم="١٠"> وَقَاْلَ</مقطع>
    <شاهدة رقم="٣" xml:id="٥٩-٣">
       <بيت>
          <مصراع> وَكُنْتَ هُنَاْكَ أَنْتَ كريمَ قيسِ</مصراع>
          <مصراع> فمَا القَيْسىُّ بَعْدََك وَالفِخَاْرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١١"> وَإِنَّمَا فَُرِق بَيْنَ هٰذَا وَبَيْنَ الْبَاْب الْأَوَّل</مقطع>
    <مقطع رقم="١٢"> لِأَنَّهُ اسْمٌ وَالْأَوَّلُ فَعْلٌ</مقطع>
    <مقطع رقم="١٣"> فأُعَمِلَ كَأَنَّكَ قُلْتَ فِي الْأَوَّل <قول> مَا صَنَعْتَ أخَاْك</قول>
   </مقطع>
    <مقطع رقم="١٤"> وَهٰذَا مُحَاْلٌ وَلٰكِنْ أَرَدْتُ أَنْ أمثَّلَ لك</مقطع>
    <مقطع رقم="١٥"> وَلو قُلْتَ <قول> مَا صَنَعْتَ مَعَ أَخِيْكَ</قول>
   </مقطع>
    <مقطع رقم="١٦"> وَ<قول> مَا زِلْتُ بِعَبْدِ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="١٧"> لكَاْنَ  <حرف> مع أَخِيْكَ</حرف>  وَ<حرف> بِعَبْدِ اللّٰهِ</حرف>  فِي مَوْضِع نَصْبٍ</مقطع>
    <مقطع رقم="١٨"> وَلو قُلْتَ <قول> أَنْتَ وَشَأْنُكَ</قول>
   </مقطع>
    <مقطع رقم="١٩"> كُنْتَ كَأَنَّكَ قُلْتَ <قول> أَنْتَ وَشَأْنُكَ مَقرونَاْنِ</قول>
   </مقطع>
    <مقطع رقم="٢٠"> وَ<قول> كُلُّ امرئٍ وَضيَعْته مقرونَاْنِ</قول>
   </مقطع>
    <مقطع رقم="٢١"> لِأَنَّ الْوَاْو فِي مَعْنَى  <حرف> مَعَ</حرف>  هُنَا</مقطع>
    <مقطع رقم="٢٢"> يَعْمَل فِيْمَا بَعْدَهَا مَا عَمِلَ فِيْمَا قَبْلَهَا مِنَ الِابْتِدَاْء وَالمبتدإ</مقطع>
    <مقطع رقم="٢٣"> وَمِثْلُهُ <قول> أَنْتَ أَعلَمُ وَمَالُكَ</قول>
   </مقطع>
    <مقطع رقم="٢٤"> فَإِنَّمَا أَرَدْتَ <قول> أَنْتَ أَعِلْمُ مَعَ مِالك</قول>
   </مقطع>
    <مقطع رقم="٢٥"> وَ<قول> أَنْتَ أعِلْمُ وَعَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٢٦"> أَيْ <قول> أَنْتَ أَعِلْمُ مَعَ عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٢٧"> وَإِنْ شِئْتَ كَاْنَ عَلَى الْوَجْهِ الآخَرِ</مقطع>
    <مقطع رقم="٢٨"> كأَنَّكَ قُلْتَ <قول> أَنْتَ وَعَبْدُ اللّٰهِ أعِلْم مِنْ غَيْرِكُمَا</قول>
   </مقطع>
    <مقطع رقم="٢٩"> فَإِنْ قُلْتَ <قول> أَنْتَ أعِلْم وَعَبْدُ اللّٰهِ</قول> فِي الْوَجْه الآخَر</مقطع>
    <مقطع رقم="٣٠"> فَإِنَّهَا أَيْضًا تُعمِل فِيْمَا بَعْدَهَا الِابْتِدَاْء</مقطع>
    <مقطع رقم="٣١"> كَمَا أعِلْمتَ فِي <قول> مَا صَنَعْتَ وَأخَاْك صَنَعْتَ</قول>
   </مقطع>
    <مقطع رقم="٣٢"> فِعْلى أَىّ الوجَهْينِ وَجَّهتَه صَاْرَ عَلَى المبتدإ</مقطع>
    <هارون مجلد="١" صفحة="٣٠٠"/>
    <مقطع رقم="٣٣"> لِأَنَّ الْوَاْو فِي المعَنْيينِ جَمِيْعًا يَعْمَل فِيْمَا بَعْدَهَا مَا عَمِلَ فِي الِاسْم الَّذِي تَعطفه عَلَيْهِ</مقطع>
    <مقطع رقم="٣٤"> وَكَذٰلِكَ <قول> مَا أَنْتَ وَعَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٣٥"> وَ<قول> كَيْفَ أَنْتَ وَعَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٣٦"> كَأَنَّكَ قُلْتَ <قول> مَا أَنْتَ وَمَا عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٣٧"> وَأَنْتَ تُرِيْدُ أَنْ تحقَّر أَمْرَه أو ترَفْع أَمْره</مقطع>
    <مقطع رقم="٣٨"> وَكَذٰلِكَ <قول> كَيْفَ أَنْتَ وَعَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٣٩"> وَأَنْتَ تُرِيْدُ أَنْ تَسَأَلَ عَنْ شأَنَّهُمْا</مقطع>
    <مقطع رقم="٤٠"> لِأَنَّكَ إِنَّمَا تَعطف بِالْوَاْو إِذَا أَرَدْت مَعْنَى مَعَ عَلَى كَيْفَ</مقطع>
    <مقطع رقم="٤١"> وَكَيْفَ بِمَنْزِلَةِ الِابْتِدَاْء</مقطع>
    <مقطع رقم="٤٢"> كَأَنَّكَ قُلْتَ وَكَيْفَ عَبْدُ اللّٰهِ فَعَمِلَتْكَمَا عَمِلَ الِابْتِدَاْءُ</مقطع>
    <مقطع رقم="٤٣"> لِأَنَّهَا لَيْسَتْْ بفعِل</مقطع>
    <مقطع رقم="٤٤"> وَ لِأَنَّ مَا بَعْدَهَا لَا يَكُوْن إِلَّا رَفْعًا</مقطع>
    <مقطع رقم="٤٥"> يَدُلُّكَ عَلَى ذٰلِكَ قَوْلُ الشَّاْعِرِ وَهُوَ زِيَاْدٌ الأَعْجَمُ وَيُقَاْل غَيْرِهُِ</مقطع>
    <شاهدة رقم="٤" xml:id="٥٩-٤">
       <بيت>
          <مصراع> تكلَّفُنِى سَوِيقَ الكَرْمِ جَرمٌ</مصراع>
          <مصراع> وَمَا جَرْمٌ وَمَا ذَاْكَ السَّويقُ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٣٠١"/>
    <مقطع رقم="٤٦"> أَلَا تَرَى أَنَّهُ يُرِيْد مَعْنَى  <حرف> مَعَ</حرف>
   </مقطع>
    <مقطع رقم="٤٧"> وَالِاسْمُ يَعْمَل فِيْهِ  <حرف> مَاْ</حرف>
   </مقطع>
    <مقطع رقم="٤٨"> وَمِثْلُ ذٰلِكَ قَوْلُ الْعَرَبِ <قول> إِنَّكَ مَا وَخَيْرًا</قول>
   </مقطع>
    <مقطع رقم="٤٩"> تُرِيْدُ <قول> إِنَّكَ مَعَ خَيْرٍ</قول>
   </مقطع>
    <مقطع رقم="٥٠"> وَقَاْلَ وَهُوَ لِأبِي عَنْتَرَةَ الْعَبَسِيّ</مقطع>
    <شاهدة رقم="٥" xml:id="٥٩-٥">
       <بيت>
          <مصراع> فَمنْ يَكُ سَاْئِلًا عَنّى فَإِنّى</مصراع>
          <مصراع> وَ جِرْوَةَ لَا تَرودُ وَلَا تُعَاْرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٥١"> فهٰذَا كُلُّه يَنْتَصِبُ انْتِصَاْبَ <قول> إِنّى وَزَيْدًا مُنْطَلِقَاْن</قول>
   </مقطع>
    <مقطع رقم="٥٢"> وَمَعْنَاْهُنّ  <حرف> مَعَ</حرف>
   </مقطع>
    <مقطع رقم="٥٣"> لِأَنَّ  <حرف> إِنّى</حرف>  هَاْهنا بِمَنْزِلَةِ الِابْتِدَاْءِ</مقطع>
    <مقطع رقم="٥٤"> لَيْسَتْ بِفِعْلٍ وَلَا اسْمٍ بِمَنْزِلَةِ الفِعْل</مقطع>
    <مقطع رقم="٥٥"> وَ<قول> كَيْفَ أَنْتَ وَزَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٥٦"> وَ<قول> أَنْتَ وَشَأْنُكَ</قول>
   </مقطع>
    <مقطع رقم="٥٧"> مِثَاْلُهمَا وَاْحِدٌ</مقطع>
    <مقطع رقم="٥٨"> لِأَنَّ الِابْتِدَاْءَ وَ<حرف> كَيْفَ</حرف>  وَ<حرف> مَاْ</حرف>  وَ<حرف> أَنْتَ</حرف>  يَعْمَلْنَ فِيْمَا كَاْنَ مَعْنَاْهُ  <حرف> مَعَ</حرف>  بَاْلرَّفْعِ</مقطع>
    <مقطع رقم="٥٩"> فيحَسَن</مقطع>
    <مقطع رقم="٦٠"> وَيُحْمَلُ عَلَى المبتدإِ كَمَا يُحْمَلُ عَلَى الِابْتِدَاْءِ</مقطع>
    <مقطع رقم="٦١"> أَلَا تَرَى أَنَّكَ تَقُوْل <قول> مَا أَنْتَ وَمَا زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٦٢"> فيَحْسُنُ</مقطع>
    <مقطع رقم="٦٣"> وَلو قُلْتَ <قول> مَا صَنَعْتَ وَمَا زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٦٤"> لَمْ يَحْسُنْ وَلَمْ يستقِمْ إِذَا أَرَدْتَ مَعْنَى <قول> مَا صَنَعْتَ وَزَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٦٥"> وَلَمْ يَكُنْ لِتَعْمَلَ  <حرف> مَا أَنْتَ</حرف>  وَ<حرف> كَيْفَ أَنْتَ</حرف>  عَمَلَ  <حرف> صَنَعْتَ</حرف>
   </مقطع>
    <مقطع رقم="٦٦"> وَلَيْسَتَْا بفِعْلٍ</مقطع>
    <مقطع رقم="٦٧"> وَلَمْ <هارون مجلد="١" صفحة="٣٠٢"/> نَرَهُمْ أعَمِلَوا شَيْئًا مِنْ هٰذَا كَذَا</مقطع>
    <مقطع رقم="٦٨"> فَإِذَا نَصَبْتَ فَكَأَنَّكَ قُلْتَ <قول> مَا صَنَعْتَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٦٩"> مِثْلَ <قول> ضَرْبتَ زَيْدًا</قول> وَ<حرف> رَأَيْت</حرف>
   </مقطع>
    <مقطع رقم="٧٠"> وَلَمْ نَرَ شَيْئًا مِنْ هٰذَا</مقطع>
    <مقطع رقم="٧١"> لَيْسَ بِفِعْل فَُعل بِهِ هٰذَا</مقطع>
    <مقطع رقم="٧٢"> فتُجريَهُ مُجْرَى الْفِعْل</مقطع>
    <مقطع رقم="٧٣"> وَزَعَمَوا أَنَّ نَاْسًا يَقُوْلُوْنَ <قول> كَيْفَ أَنْتَ وَزَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٧٤"> وَ<قول> مَا أَنْتَ وَزَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٧٥"> وَهُوَ قَلِيْل فِي كَلَاْم الْعَرَب</مقطع>
    <مقطع رقم="٧٦"> وَلَمْ يَحْمِلْوا الْكَلَاْمَ عَلَى  <حرف> مَاْ</حرف>
   </مقطع>
    <مقطع رقم="٧٧"> وَلَا  <حرف> كَيْفَ</حرف>
   </مقطع>
    <مقطع رقم="٧٨"> وَلٰكِنَّهُمْ حَمَلُوْهُ عَلَى الفِعْل</مقطع>
    <مقطع رقم="٧٩"> عَلَى شيْءٍ لَوْ ظَهَرَ حتَّى يَلَفَظوا بِهِ لَمْ يَنقُضْ مَا أَرَاْدَوا مِنَ المَعْنَى</مقطع>
    <مقطع رقم="٨٠"> حِيْنَ حَمَلَوا الْكَلَاْم عَلَى  <حرف> مَاْ</حرف>  وَ<حرف> كَيْفَ</حرف>
   </مقطع>
    <مقطع رقم="٨١"> كَأَنَّهُ قَاْلَ <قول> كَيْفَ تَكُوْن أَنْتَ</قول>
   </مقطع>
    <مقطع رقم="٨٢"> وَ<قول> قصعَةً مِنْ ثريَد</قول>
   </مقطع>
    <مقطع رقم="٨٣"> وَ<قول> مَا كُنْتَ وَزَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٨٤"> لِأَنَّ  <حرف> كُنْتَ</حرف>  وَ<حرف> تَكُوْنُ</حرف>  يَقَعَاْنِ هَا هُنَا كَثِيْرًا</مقطع>
    <مقطع رقم="٨٥"> وَلَا يَنقُضَاْنِ مَا تُرِيْدُ مِنْ مَعْنَى الْحَدِيْث</مقطع>
    <مقطع رقم="٨٦"> فمَضَى صَدْرُ الْكَلَاْمِ</مقطع>
    <مقطع رقم="٨٧"> وَكَأَنَّهُ قَدْ تَكلَمْ بهَاْ</مقطع>
    <مقطع رقم="٨٨"> وَإِنْ كَاْنَ لَمْ يَلْفَظْ بهَاْ</مقطع>
    <مقطع رقم="٨٩"> لوقوعِهَا هٰهُنَا كَثِيْرًا</مقطع>
    <مقطع رقم="٩٠"> وَمِنْ ثَمَّ أنشد بَعْضهم</مقطع>
    <شاهدة رقم="٦" xml:id="٥٩-٦">
       <بيت>
          <مصراع> فمَا أَنَا وَالسَّيرَ فِي مَتلَفٍ</مصراع>
          <مصراع> يبَرَّحُ بَاْلذّكَرِ الضّابِطِ</مصراع>
      </بيت>
   </شاهدة>
