     البكاء="١-٥٥"
    رقم="٢">

   <عنوان>
      <مقطع رقم="١">هٰذَاْ بَاْبُ <ص><مادة>جري</مادة>مَجَاْرِيْ</ص> أَوَاْخِرِ الْكَلِمِ
      مِنَ الْعَرَبِيَّةِ</مقطع>
   </عنوان>
   <رأس يعقوب="٤١" هارون="١٣" هو="٠">المَجارِي الثَّمانِيَةُ</رأس>
   <مقطع رقم="٢">وَهِيَ تَجْرِي على ثَمَانِي مَجَارٍ على</مقطع>
   <مقطع رقم="٣">
      <ص><مادة>نصب</مادة>النَّصْبِ</ص>
   </مقطع>
   <مقطع رقم="٤">وَ<ص><مادة>جرر</مادة>الْجَرِّ</ص>
   </مقطع>
   <مقطع رقم="٥">وَ<ص><مادة>رفع</مادة>الرَّفْعِ</ص>
   </مقطع>
   <مقطع رقم="٦">وَ<ص><مادة>جزم</مادة>الْجَزْمِ</ص>
   </مقطع>
   <مقطع رقم="٧">وَ<ص><مادة>فتح</مادة>الْفَتْحِ</ص>
   </مقطع>
   <مقطع رقم="٨">وَ<ص><مادة>ضمم</مادة>الضَّمِّ</ص>
   </مقطع>
   <مقطع رقم="٩">وَ<ص><مادة>كسر</مادة>الْكَسْرِ</ص>
   </مقطع>
   <مقطع رقم="١٠">وَ<ص><مادة>وقف</مادة>الْوَقْفِ</ص>
   </مقطع>
   <مقطع رقم="١١">وَهٰذِهِ المَجَارِي الثَّمَانِيَةُ</مقطع>
   <مقطع رقم="١٢">يَجْمَعُهُنَّ في اللَّفْظِ أَرْبَعَةُ أَضْرُبٍ</مقطع>
   <مقطع رقم="١٣">فالنَّصْبُ والفَتْحُ في اللَّفْظِ ضَرْبٌ واحِدٌ</مقطع>
   <مقطع رقم="١٤">والجَرُّ والكَسْرُ فِيهِ ضَرْبٌ وَاحِدٌ</مقطع>
   <مقطع رقم="١٥">وَكَذٰلِكَ الرَّفْعُ وَالضَّمُّ وَالْجَزْمُ وَالْوَقْفُ</مقطع>
   <مقطع رقم="١٦">وَإِنَّمَا ذَكَرْتُ لَكَ ثَمَانِيَةَ مَجَارٍ</مقطع>
   <مقطع رقم="١٧">لِأَفْرُقَ بَيْنَ</مقطع>
   <مقطع رقم="١٨">مَا يَدْخُلُهُ ضَرْبٌ مِنْ هٰذِهِ الْأَرْبَعَةِ</مقطع>
   <مقطع رقم="١٩">لِمَا يُحْدِثُ فِيهِ الْعَامِلُ</مقطع>
   <مقطع رقم="٢٠">وَلَيْسَ شَيْءٌ مِنْهَا</مقطع>
   <مقطع رقم="٢١">إِلَّا وَهُوَ يَزُولُ عَنْهُ</مقطع>
   <مقطع رقم="٢٢">وَبَيْنَ</مقطع>
   <مقطع رقم="٢٣">ما يُبْنَى عَلَيْهِ الْحَرْفُ</مقطع>
   <مقطع رقم="٢٤">بِنَاءً لا يَزُولُ عَنْهُ</مقطع>
   <مقطع رقم="٢٥">لِغَيْرِ شَيْءٍ</مقطع>
   <مقطع رقم="٢٦">أَحْدَثَ ذٰلِكَ فِيهِ</مقطع>
   <مقطع رقم="٢٧">مِنَ الْعَوَامِلِ</مقطع>
   <مقطع رقم="٢٨">الَّتِي لِكُلِّ عَامِلٍ مِنْهَا</مقطع>
   <مقطع رقم="٢٩">ضَرْبٌ مِنَ اللَّفْظِ في الْحَرْفِ</مقطع>
   <مقطع رقم="٣٠">وَذٰلِكَ الْحَرْفُ <ص><مادة>عرب</مادة>حَرْفُ الْإِعْرَابِ</ص>
   </مقطع>
   <رأس يعقوب="٤١" هارون="١٣" هو="١">مَجَارِي الْمُعْرَب</رأس>
   <مقطع رقم="٣١">فالرَّفْعُ والْجَرُّ والنَّصْبُ والْجَزْمُ</مقطع>
   <مقطع رقم="٣٢">لِحُرُوفِ الْإِعْرابِ</مقطع>
   <مقطع رقم="٣٣">وحُرُوفُ الإِعْرابِ لِلْأَسْمَاءِ الْمُتَمَكِّنَةِ</مقطع>
   <مقطع رقم="٣٤">ولِلْأَفْعَالِ الْمُضَارَعَةِ لِأَسْمَاءِ الْفَاعِلِينَ</مقطع>
   <مقطع رقم="٣٥">الَّتِي في أَوَائِلِهَا الزَّوَائِدُ الْأَرْبَعُ</مقطع>
   <مقطع رقم="٣٦">الْهَمْزَةُ والتَّاءُ والْيَاءُ والنُّونُ</مقطع>
   <مقطع رقم="٣٧">وَذٰلِكَ قَوْلُكَ <قول>أَفْعَلُ أَنَا</قول>
   </مقطع>
   <مقطع رقم="٣٨">و <قول>تَفْعَلُ أَنْتَ أَوْ هِيَ</قول>
   </مقطع>
   <مقطع رقم="٣٩">و <قول>يَفْعَلُ هُوَ</قول>
   </مقطع>
   <مقطع رقم="٤٠">و <قول>نَفْعَلُ نَحْنُ</قول>
   </مقطع>
   <هارون مجلد="١" صفحة="١٣"/>
   <مقطع رقم="٤١">وَالنَّصْبُ في الْأَسْمَاءِ</مقطع>
   <مقطع رقم="٤٢">
      <قول>رَأَيْتُ  زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٤٣">وَالْجَرُّ مِثْلُ <قول>مَرَرْتُ بِزَيْدٍ</قول>
   </مقطع>
   <مقطع رقم="٤٤">وَالرَّفْعُ <قول>هٰذَا زَيْدٌ</قول>
   </مقطع>
   <مقطع رقم="٤٥">وَلَيْسَ في الْأَسْمَاءِ جَزْمٌ</مقطع>
   <مقطع رقم="٤٦">لِتَمَكُّنِهَا</مقطع>
   <مقطع رقم="٤٧">ولِلِحَاقِ التَّنْوِينِ</مقطع>
   <مقطع رقم="٤٨">فَإِذَا ذَهَبَ التَّنْوِينُ</مقطع>
   <مقطع رقم="٤٩">لَمْ يَجْمَعُوا على الِاسْمِ</مقطع>
   <مقطع رقم="٥٠">ذَهَابَه وَذَهَابَ الْحَرَكَةِ</مقطع>
   <مقطع رقم="٥١">وَالنَّصْبُ في الْمُضَارِعِ مِنَ الْأَفْعَالِ</مقطع>
   <مقطع رقم="٥٢">
      <قول>لَنْ يَفْعَلَ</قول>
   </مقطع>
   <مقطع رقم="٥٣">وَالرَّفْعُ <قول>سَيَفْعَلُ</قول>
   </مقطع>
   <مقطع رقم="٥٤">وَالْجَزْمُ <قول>لَمْ يَفْعَلْ</قول>
   </مقطع>
   <مقطع رقم="٥٥">وَلَيْسَ في الْأَفْعَالِ الْمُضَارِعَةِ جَرٌّ</مقطع>
   <مقطع رقم="٥٦">كَمَا أَنَّهُ لَيْسَ في الْأَسْمَاءِ جَزْمٌ</مقطع>
   <مقطع رقم="٥٧">لِأَنَّ الْمَجْرُورَ داخِلٌ في الْمُضافِ إِلَيْهِ</مقطع>
   <مقطع رقم="٥٨">مُعاقِبٌ لِلتَّنْوِينِ</مقطع>
   <مقطع رقم="٥٩">ولَيْسَ ذٰلِكَ في هٰذِهِ الْأَفْعَالِ</مقطع>
   <مقطع رقم="٦٠">وَإِنَّمَا ضَارَعَتْ أَسْمَاءَ الْفاعِلِينَ</مقطع>
   <مقطع رقم="٦١">أَنَّكَ تَقُولُ <قول>إِنَّ عَبْدَ اللَّهِ لَيَفْعَلُ</قول>
   </مقطع>
   <مقطع رقم="٦٢">فَيُوَافِقُ قَوْلَكَ <قول>لَفَاعِلٌ</قول>
   </مقطع>
   <مقطع رقم="٦٣">حَتَّى كَأَنَّكَ قُلْتَ</مقطع>
   <مقطع رقم="٦٤">
      <قول>إِنَّ زَيْدًا لَفَاعِلٌ</قول>
   </مقطع>
   <مقطع رقم="٦٥">
      <!-- <نص سبب="١٨٠"> -->
      <!-- <متن> -->
        فِيمَا تُرِيدُ مِنَ الْمَعْنَى
      <!-- </متن> -->
      <!-- </نص> -->
   </مقطع>
   <مقطع رقم="٦٦">وتَلْحَقُهُ هٰذِهِ اللَّامُ</مقطع>
   <مقطع رقم="٦٧">كَمَا لَحِقَتْ الِاسْمَ</مقطع>
   <مقطع رقم="٦٨">وَلَا تَلْحَقُ <حرف>فَعَلَ</حرف> اللامُ</مقطع>
   <مقطع رقم="٦٩">وَتَقُولُ <قول>سَيَفْعَلُ ذٰلِكَ</قول>
   </مقطع>
   <مقطع رقم="٧٠">و <قول>سَوْفَ يَفْعَلُ ذٰلِكَ</قول>
   </مقطع>
   <مقطع رقم="٧١">فَتُلْحِقُهَا هٰذَيْنِ الْحَرْفَيْنِ لِمَعْنًى</مقطع>
   <مقطع رقم="٧٢">
كَمَا تَلْحَقُ الْأَلِفُ وَاللَّامُ الْأسَماءَ لِلْ‍<ص><مادة>عرف</مادة>مَعْرِفَةِ</ص>
   </مقطع>
   <مقطع رقم="٧٣">وَيُبَيِّنُ لَكَ</مقطع>
   <مقطع رقم="٧٤">أَنَّهَا لَيْسَتْ بِأَسْمَاءَ</مقطع>
   <مقطع رقم="٧٥">أَنَّكَ لَوْ وَضَعْتَهَا مَوَاضِعَ الْأَسْمَاءِ</مقطع>
   <مقطع رقم="٧٦">لَمْ يَجُزْ ذٰلِكَ</مقطع>
   <مقطع رقم="٧٧">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ</مقطع>
   <مقطع رقم="٧٨">
      <قول>إِنَّ يَضْرِبَ يَأْتِينِا</قول>
   </مقطع>
   <مقطع رقم="٧٩">وَأَشْبَاهَ هٰذَا</مقطع>
   <مقطع رقم="٨٠">لَمْ يَكُنْ كَلَامًا</مقطع>
   <مقطع رقم="٨١">إِلَّا أَنَّهَا ضَارَعَتْ الْفَاعِلَ</مقطع>
   <مقطع رقم="٨٢">لِاجْتِمَاعِهِمَا في المَعْنَى</مقطع>
   <مقطع رقم="٨٣">وسَتَرَى ذٰلِكَ أَيْضًا في مَوْضِعِهِ</مقطع>
   <هارون مجلد="١" صفحة="١٤"/>
   <مقطع رقم="٨٤">ولِدُخُولِ اللَّامِ</مقطع>
   <مقطع رقم="٨٥">قَالَ اللّٰهُ جَلَّ ثَنَاؤُهُ
   <!-- <مقطع رقم="٨٦"> -->
      <آية سورة="١٦" رقم="١٢٤">وَإِنَّ رَبَّكَ لَيَحْكُمُ بَيْنَهُمْ</آية>
   </مقطع>
   <مقطع رقم="٨٧">أَيْ لَحَاكِمٌ</مقطع>
   <مقطع رقم="٨٨">ولِمَا لَحِقَها مِنَ <حرف>السِّينِ</حرف> و <حرف>سَوْفَ</حرف>
   </مقطع>
   <مقطع رقم="٨٩">كَمَا لَحِقَتْ الِاسْمَ الْأَلِفُ وَاللَّامُ لِلْمَعْرِفَةِ</مقطع>
   <رأس يعقوب="٤٢" هارون="١٥" هو="٢">مَجَارِي المَبْنِيَّات</رأس>
   <مقطع رقم="٩٠">وأمَّا الفَتْحُ والكَسْرُ والضَّمُّ والوَقْفُ</مقطع>
   <مقطع رقم="٩١">فَلِلْأَسْمَاءِ غَيْرِ الْمُتَمَكِّنَةِ</مقطع>
   <مقطع رقم="٩٢">الْمُضَارِعَةِ عِنْدَهُمْ مَا لَيْسَ بِاسْمٍ وَلَا فِعْلٍ</مقطع>
   <مقطع رقم="٩٣">مِمَّا جَاءَ لِمَعْنًى</مقطع>
   <مقطع رقم="٩٤">لَيْسَ غَيْرُ</مقطع>
   <مقطع رقم="٩٥">نَحْوُ <حرف>سَوْفَ</حرف> و <حرف>قَدْ</حرف>
   </مقطع>
   <مقطع رقم="٩٦">وَلِلْأَفْعَالِ الَّتِي لَمْ تَجْرِ مَجْرَى الْمَضَارَعَةِ</مقطع>
   <مقطع رقم="٩٧">ولِلْحُرُوفِ الَّتِي لَيْسَتْ بِأَسْماءَ وَلَا أَفْعَالٍ</مقطع>
   <مقطع رقم="٩٨">وَلَمْ تَجِئْ إِلَّا لِمَعْنًى</مقطع>
   <مقطع رقم="٩٩">فَالْفَتْحُ في الْأَسْمَاءِ قَوْلُهُمْ</مقطع>
   <مقطع رقم="١٠٠">
      <حرف>حَيْثَ</حرف> و <حرف>أَيْنَ</حرف> و <حرف>كَيْفَ</حرف>
   </مقطع>
   <مقطع رقم="١٠١">والكَسْرُ فِيهَا نَحْوُ</مقطع>
   <مقطع رقم="١٠٢">
      <حرف>أُوْلَاْءِ</حرف> و <حرف>حَذَارِ</حرف> و <حرف>بَدَادِ</حرف>
   </مقطع>
   <مقطع رقم="١٠٣">وَالضَّمُّ نَحْوُ</مقطع>
   <مقطع رقم="١٠٤">
      <حرف>حَيْثُ</حرف> و <حرف>قَبْلُ</حرف> و <حرف>بَعْدُ</حرف>
   </مقطع>
   <مقطع رقم="١٠٥">وَالْوَقْفُ نَحْوُ</مقطع>
   <مقطع رقم="١٠٦">
      <حرف>مَنْ</حرف> و <حرف>كَمْ</حرف> و <حرف>قَطْ</حرف> و <حرف>إِذْ</حرف>
   </مقطع>
   <هارون مجلد="١" صفحة="١٥"/>
   <يعقوب مجلد="١" صفحة="٤٢"/>
   <مقطع رقم="١٠٧">وَالْفَتْحُ في الْأَفْعَالِ</مقطع>
   <مقطع رقم="١٠٨">الَّتِي لَمْ تَجْرِ مُجْرَى الْمُضَارَعَةِ</مقطع>
   <مقطع رقم="١٠٩">قَوْلُهُمْ <قول>ضَرَبَ</قول>
   </مقطع>
   <مقطع رقم="١١٠">وَكَذٰلِكَ كُلُّ بِنَاءٍ مِنَ الْفِعْلِ</مقطع>
   <مقطع رقم="١١١">كَانَ مَعْنَاهُ <حرف>فَعَلَ</حرف>
   </مقطع>
   <مقطع رقم="١١٢">ولَمْ يُسَكِّنُوا آخِرَ <حرف>فَعَلَ</حرف>
   </مقطع>
   <مقطع رقم="١١٣">لِأَنَّ فِيهَا بَعْضُ مَا في الْمُضَارَعَةِ</مقطع>
   <مقطع رقم="١١٤">تَقُولُ <قول>هٰذَا رَجُلٌ ضَرَبَنَا</قول>
   </مقطع>
   <مقطع رقم="١١٥">فَتَصِفُ بِهَا النَّكِرَةَ</مقطع>
   <مقطع رقم="١١٦">وتَكُونُ في مَوْضِعِ <حرف>ضَارِبٌ</حرف>
   </مقطع>
   <مقطع رقم="١١٧">إِذَا قُلْتَ <قول>هٰذَا رَجُلٌ ضَارِبٌ</قول>
   </مقطع>
   <مقطع رقم="١١٨">وَتَقُولُ <قول>إِنْ فَعَلَ فَعَلْتُ</قول>
   </مقطع>
   <مقطع رقم="١١٩">فَيَكُونُ في مَعْنَى</مقطع>
   <مقطع رقم="١٢٠">
      <قول>إِنْ يَفْعَلْ أَفْعَلْ</قول>
   </مقطع>
   <مقطع رقم="١٢١">فَهِيَ فِعْلٌ</مقطع>
   <مقطع رقم="١٢٢">كَمَا أَنَّ الْمُضَارِعَ فِعْلٌ</مقطع>
   <مقطع رقم="١٢٣">وَقَدْ وَقَعَتْ مَوْقِعَهَا في <حرف>إِنْ</حرف>
   </مقطع>
   <مقطع رقم="١٢٤">ووَقَعَتْ مَوْقِعَ الْأَسْمَاءِ في الْوَصْفِ</مقطع>
   <مقطع رقم="١٢٥">كَمَا تَقَعُ الْمُضَارَعَةُ في الْوَصْفِ</مقطع>
   <مقطع رقم="١٢٦">فَلَمْ يُسَكِّنُوْهَا</مقطع>
   <مقطع رقم="١٢٧">كَمَا لَمْ يُسَكُِّوا مِنَ الْأَسْمَاءِ</مقطع>
   <مقطع رقم="١٢٨">ما ضَارَعَ الْمُتَمَكِّنَ</مقطع>
   <مقطع رقم="١٢٩">وَلَا مَا صُيِّرَ مِنَ الْمُتَمَكِّنِ</مقطع>
   <مقطع رقم="١٣٠">في مَوْضِعٍ</مقطع>
   <مقطع رقم="١٣١">بِمَنْزِلَةِ غَيْرِ الْمُتَمَكِّنِ</مقطع>
   <مقطع رقم="١٣٢">فَالْمُضارِعُ <قول>مِنْ عَلُ</قول>
   </مقطع>
   <مقطع رقم="١٣٣">حَرَّكُوهُ</مقطع>
   <مقطع رقم="١٣٤">لِأَنَّهُمْ قَدْ يَقُولُونَ <قول>مِنْ عَلٍ</قول>
   </مقطع>
   <مقطع رقم="١٣٥">فَيُجْرُوْنَهُ</مقطع>
   <مقطع رقم="١٣٦">وَأَمَّا الْمُتَمَكِّنِ</مقطع>
   <مقطع رقم="١٣٧">الَّذِي جُعِلَ بِمَنْزِلَةِ غَيْرِ الْمُتَمَكِّنِ</مقطع>
   <مقطع رقم="١٣٨">في مَوْضِعٍ</مقطع>
   <مقطع رقم="١٣٩">فَقَوْلُكَ <قول>ٱبْدَأْ بِهٰذَا أَوَّلُ</قول>
   </مقطع>
   <مقطع رقم="١٤٠"> و<قول>يَا حَكَمُ</قول>
   </مقطع>
   <هارون مجلد="١" صفحة="١٦"/>
   <مقطع رقم="١٤١">
     وَ<ص><مادة>وقف</مادة>الْوَقْفُ</ص> قَوْلُهُم
     <!-- </مقطع> -->
     <!-- <مقطع رقم="١٤٢">  -->
     <قول>اِضْرِبْ</قول> في الْأَمْرِ
   </مقطع>
   <مقطع رقم="١٤٣">لَمْ يُحَرِّكُوهَا</مقطع>
   <مقطع رقم="١٤٤">لِأَنَّهَا لَا يُوصَفُ بِهَا</مقطع>
   <مقطع رقم="١٤٥">وَلَا تَقَعُ مَوْقِعَ الْمُضَارَعَةِ</مقطع>
   <مقطع رقم="١٤٦">فَبَعُدَتْ مِنَ الْمُضَارَعَةِ</مقطع>
   <مقطع رقم="١٤٧">بُعْدَ <حرف>كَمْ</حرف> و <حرف>إِذْ</حرف>
   </مقطع>
   <مقطع رقم="١٤٨">مِنَ الْمُتَمَكِّنَةِ</مقطع>
   <مقطع رقم="١٤٩">وَكَذٰلِكَ كُلُّ بِنَاءٍ مِنَ الْفِعْلِ</مقطع>
   <مقطع رقم="١٥٠">كَانَ مَعْنَاهُ <حرف>اِفْعَلْ</حرف>
   </مقطع>
   <مقطع رقم="١٥١">وَالْفَتْحُ في الْحُرُوفِ</مقطع>
   <مقطع رقم="١٥٢">الَّتِي لَيْسَتْ إِلَّا لِمَعْنًى</مقطع>
   <مقطع رقم="١٥٣">وَلَيْسَتْ بِأَسْمَاءٍ وَلَا أَفْعَالٍ</مقطع>
   <مقطع رقم="١٥٤">قَوْلُهُمْ <حرف>سَوْفَ</حرف> و <حرف>ثُمَّ</حرف>
   </مقطع>
   <مقطع رقم="١٥٥">وَالْكَسْرُ فِيهَا</مقطع>
   <مقطع رقم="١٥٦">قَوْلُهُمْ في بَاءِ الْإِضَافَةِ وَلَامِهَا</مقطع>
   <مقطع رقم="١٥٧">
      <حرف>بِزَيْدٍ</حرف> و <حرف>لِزَيْدٍ</حرف>
   </مقطع>
   <مقطع رقم="١٥٨">وَالضَّمُّ فِيهَا <حرف>مُنْذُ</حرف>
   </مقطع>
   <مقطع رقم="١٥٩">فِيمَنْ جَرَّ بِهَا</مقطع>
   <مقطع رقم="١٦٠">لِأَنَّهَا بِمَنْزِلَةِ <حرف>مِنْ</حرف> في الْأَيَامِ</مقطع>
   <مقطع رقم="١٦١">وَالْوَقْفُ فِيهَا قَوْلُهُمْ</مقطع>
   <مقطع رقم="١٦٢">
      <حرف>مِنْ</حرف> و <حرف>هَلْ</حرف> و <حرف>بَلْ</حرف> و <حرف>قَدْ</حرف>
   </مقطع>
   <يعقوب مجلد="١" صفحة="٤٣"/>
   <مقطع رقم="١٦٣">وَلَا ضَمَّ في الْفِعْلِ</مقطع>
   <مقطع رقم="١٦٤">لِأَنَّهُ لَمْ يَجِئْ ثَالِثٌ</مقطع>
   <مقطع رقم="١٦٥">سِوَى الْمُضَارِعُ</مقطع>
   <مقطع رقم="١٦٦">وعلى هٰذَيْنِ الْمَعْنَيَيْنِ</مقطع>
   <مقطع رقم="١٦٧">بِنَاءُ كُلِّ فِعْلٍ بَعْدَ الْمُضَارِعِ</مقطع>

   <رأس هارون="١٧" يعقوب="٤٤" هو="١٦٦">
     التَّثْنِيَةُ وَالجَمْعُ
   </رأس>

   <رأس هارون="١٧" يعقوب="٤٤" هو="٣">التَّثْنِيَةُ في الِاسْمِ</رأس>
   <مقطع رقم="١٦٨">وَاعْلَمْ أَنَّكَ إِذَا<ص><مادة>ثني</مادة>ثَنَّيْتَ</ص>الْوَاحِدَ</مقطع>
   <مقطع رقم="١٦٩">لَحْقَتْهُ زِيَادَتَانِ</مقطع>
   <مقطع رقم="١٧٠">الْأُوْلَى مِنْهِمَا<ص><مادة>حرف المدّ</مادة><مادة>حرف اللِّين</مادة>حَرْفُ الْمَدِّ وَاللِّيْنِ</ص>
   </مقطع>
   <مقطع رقم="١٧١">وَهُوَ حَرْفُ الْإِعْرَابِ</مقطع>
   <مقطع رقم="١٧٢">غَيْرُ مُتَحَرِّك</مقطع>
   <مقطع رقم="١٧٣">وَلَا مُنَوَّنٌ</مقطع>
   <مقطع رقم="١٧٤">يَكُونُ في الرَّفْعِ أَلِفًا</مقطع>
   <مقطع رقم="١٧٥">وَلَمْ يَكُنْ وَاوًا</مقطع>
   <مقطع رقم="١٧٦">لِيَفْصِلَ بَيْنَ التَّثْنِيَّةِ</مقطع>
   <مقطع رقم="١٧٧">وَالْجَمْعِ الَّذِي<ص><مادة>حدد</مادة>عَلَى حَدِّ التَّثْنِيِّةِ</ص>
   </مقطع>
   <مقطع رقم="١٧٨">وَيَكُونُ في الْجَرِّ</مقطع>
   <مقطع رقم="١٧٩">
      <حرف>يَاءً مَفْتُوحًا مَا قَبْلَهَا</حرف>
   </مقطع>
   <مقطع رقم="١٨٠">وَلَمْ يُكسَرْ</مقطع>
   <مقطع رقم="١٨١">ليُفْصَلَ بَيْنَ التَّثْنِيَةِ</مقطع>
   <مقطع رقم="١٨٢">وَالْجَمْعِ الَّذِي عَلَى حَدِّ التَّثْنِيَّةِ</مقطع>
   <مقطع رقم="١٨٣">وَيَكُونُ في النَّصْبِ كَذٰلِكَ</مقطع>
   <مقطع رقم="١٨٤">وَلَمْ يَجْعَلُواْ النَّصْبَ أَلِفًا</مقطع>
   <مقطع رقم="١٨٥">لَيَكُونَ مِثْلَهُ في الْجَمْعِ</مقطع>
   <مقطع رقم="١٨٦">وَكَانَ مَعَ ذَاْ</مقطع>
   <مقطع رقم="١٨٧">أَنْ يَكُونَ تَابِعًا</مقطع>
   <مقطع رقم="١٨٨">لِمَاْ الْجَرُّ مِنْهُ أُوْلَى</مقطع>
   <مقطع رقم="١٨٩">لِأَنَّ الْجَرَّ لِلِاسْمِ</مقطع>
   <مقطع رقم="١٩٠">لَا يُجَاوِزُهُ</مقطع>
   <مقطع رقم="١٩١">وَالرَّفْعُ قَدْ يَنْتَقِلُ إِلَى الْفِعْلِ</مقطع>
   <مقطع رقم="١٩٢">فَكَانَ هٰذَا أَغْلَبَ وَأَقْوَى</مقطع>
   <مقطع رقم="١٩٣">وَتَكُونُ الزِّيَادَةُ الثَّانِيَةُ نُونًا</مقطع>
   <هارون مجلد="١" صفحة="١٧"/>
   <مقطع رقم="١٩٤">
   كَأَنَّهَا عِوَضٌ لِمَا مُنِعَ</مقطع>
   <مقطع رقم="١٩٥">مِنَ الْحَرَكَةِ وَالتَّنْوِينِ</مقطع>
   <مقطع رقم="١٩٦">وَهِيَ النُّونُ</مقطع>
   <مقطع رقم="١٩٧">وَحَرَكَتُهَا الْكَسْرُ</مقطع>
   <مقطع رقم="١٩٨">وَذٰلِكَ قَوْلُكَ <قول>هُمَاْ الرَّجُلَانِ</قول>
   </مقطع>
   <مقطع رقم="١٩٩">و <قول>رَأَيْتُ الرَّجُلَيْنِ</قول>
   </مقطع>
   <مقطع رقم="٢٠٠">و <قول>مَرَرْتُ بِالرَّجُلَيْنِ</قول>
   </مقطع>
   <رأس هارون="" يعقوب="" هو="٤">الجَمْعُ السَّالِمُ في الِاسْمِ</رأس>
   <مقطع رقم="٢٠١">وَإِذَا جَمَعْتَ على حَدِّ التَّثْنِيَّةِ</مقطع>
   <مقطع رقم="٢٠٢">لَحِقَتْهَا زَائِدَتانِ</مقطع>
   <مقطع رقم="٢٠٣">الأُوْلَى مِنْهُمَا حَرْفُ الْمَدِّ وَاللِّينِ</مقطع>
   <مقطع رقم="٢٠٤">وَالثَّانِيَةُ نُونٌ</مقطع>
   <مقطع رقم="٢٠٥">وَحَالُ الْأُوْلَى</مقطع>
   <مقطع رقم="٢٠٦">في السُّكُونِ</مقطع>
   <مقطع رقم="٢٠٧">وَتَرْكِ التَّنْوِينِ</مقطع>
   <مقطع رقم="٢٠٨">وَأَنَّهَا حَرْفُ الْإِعْرَابِ</مقطع>
   <مقطع رقم="٢٠٩">حَالُ الْأُوْلَى في التَّثْنِيَةِ</مقطع>
   <مقطع رقم="٢١٠">إِلَّا أَنَّهَا</مقطع>
   <مقطع رقم="٢١١">وَاوٌ مَضْمُومٌ مَا قَبْلَهْا</مقطع>
   <مقطع رقم="٢١٢">في الرَّفْعِ</مقطع>
   <مقطع رقم="٢١٣">وَفي الْجَرِّ وَالنَّصْبِ</مقطع>
   <مقطع رقم="٢١٤">يَاءٌ مَكْسُورٌ ما قَبْلَهَا</مقطع>
   <مقطع رقم="٢١٥">وَنُونُهَا مَفْتُوحَةٌ</مقطع>
   <مقطع رقم="٢١٦">فَرَّقُوا بَيْنَهَا وَبَيْنَ نُونِ الاِثْنَيْنِ</مقطع>
   <مقطع رقم="٢١٧">كَمَا أَنَّ حَرْفَ اللِّينِ</مقطع>
   <مقطع رقم="٢١٨">الَّذِي هُوَ حَرْفُ الْإِعْرَابِ</مقطع>
   <مقطع رقم="٢١٩">مُخْتَلِفٌ فِيهِمَا</مقطع>
   <مقطع رقم="٢٢٠">وَذٰلِكَ قَوْلُكَ <قول>الْمُسْلِمُوْنَ</قول>
   </مقطع>
   <مقطع رقم="٢٢١">و <قول>رَأَيْتُ الْمُسْلِمِيْنَ</قول>
   </مقطع>
   <مقطع رقم="٢٢٢">و <قول>مَرَرْتُ بِالْمُسْلِمِيْنَ</قول>
   </مقطع>
   <رأس هارون="" يعقوب="" هو="١٨٠">تاءُ جَمْعِ الِاسْمِ المُؤَنَّثِ</رأس>
   <مقطع رقم="٢٢٣">وَمِنْ ثَمَّ</مقطع>
   <مقطع رقم="٢٢٤">جَعَلُوا<ص><مادة>جمع</مادة>تَاءَ الْجَمْعِ</ص>
   </مقطع>
   <مقطع رقم="٢٢٥">في الْجَرِّ وَالنَّصْبِ مَكْسُورَةً</مقطع>
   <مقطع رقم="٢٢٦">لِأَنَّهُمْ جَعَلُوا التَّاءَ</مقطع>
   <مقطع رقم="٢٢٧">الَّتِي هِيَ حَرْفُ الْإَعْرَابِ</مقطع>
   <مقطع رقم="٢٢٨">كَالْوَاوِ وَالْيَاءِ</مقطع>
   <مقطع رقم="٢٢٩">وَالتَّنْوِينَ بِمَنْزِلَةِ النُّونِ</مقطع>
   <مقطع رقم="٢٣٠">لِأَنَّهَا في التَّأْنِيثِ</مقطع>
   <مقطع رقم="٢٣١">نَظِيرَةُ الْوَاوِ وَالْيَاءِ في التَّذْكِيرِ</مقطع>
   <مقطع رقم="٢٣٢">فَأَجْرُوها مُجْرَاهَا</مقطع>
   <هارون مجلد="١" صفحة="١٨"/>
   <رأس هارون="١.١٨" يعقوب="١.٤٤" هو="١٨٩">تثْنِيةُ الأَفْعال</رأس>
   <مقطع رقم="٢٣٣">وَاعْلَمْ أَنَّ التَّثْنِيَةَ</مقطع>
   <مقطع رقم="٢٣٤">إِذَا لَحِقَتْ الْأَفْعَالَ الْمُضَارِعَةَ</مقطع>
   <مقطع رقم="٢٣٥">عَلَامَةً لِلْفَاعِلَيْنِ</مقطع>
   <مقطع رقم="٢٣٦">لَحِقَتْهَا أَلِفٌ وَنُونٌ</مقطع>
   <مقطع رقم="٢٣٧">وَلَمْ تَكُنْ الْأَلِفُ حَرْفَ الْإَعْرَابِ</مقطع>
   <مقطع رقم="٢٣٨">لِأَنَّكَ لَمْ تُرِدْ</مقطع>
   <مقطع رقم="٢٣٩">أَنْ تُثَنِّيَ <حرف>يَفْعَلُ</حرف>
   </مقطع>
   <مقطع رقم="٢٤٠">هٰذَا الْبِنَاءَ</مقطع>
   <مقطع رقم="٢٤١">فَتَضُمَّ إِلَيْهِ <حرف>
         <بدل>
           <ها>يفعل</ها>
            <يع>يَفْعل</يع>
            <بكا>يَفْعَلُ</بكا>
            <در>يَفْعَلًا</در>
         </بدل>
      </حرف> آخَرَ</مقطع>
   <مقطع رقم="٢٤٢">وَلٰكِنَّكَ إِنَّمَا أَلْحَقْتَهُ هٰذَا</مقطع>
   <مقطع رقم="٢٤٣">عَلَامَةً لِلْفَاعِلَيْنِ</مقطع>
   <مقطع رقم="٢٤٤">وَلَمْ تَكُنْ مُنَوَّنَةً</مقطع>
   <مقطع رقم="٢٤٥">وَلَا يَلْزَمُهَا الْحَرَكَةُ</مقطع>
   <مقطع رقم="٢٤٦">لِأَنَّهُ</مقطع>
   <مقطع رقم="٢٤٧">يُدْرِكُهَا الْجَزْمُ وَالسُّكُونُ</مقطع>
   <مقطع رقم="٢٤٨">فَتَكُونُ الْأُوْلَى حَرْفَ الْإِعْرَابِ</مقطع>
   <مقطع رقم="٢٤٩">وَالثَّانِيَةُ كَالتَّنْوِينِ</مقطع>
   <مقطع رقم="٢٥٠">فَكَمَا كَانَتْ حَالُ <حرف>يَفْعَلُ</حرف>
