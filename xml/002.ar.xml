   <مقطع رقم="٣٨٢">وَوَافَقَ في الْبِنَاءِ</مقطع>
   <مقطع رقم="٣٨٣">وَأَمَّا مُضَارِعُهُ في الصِّفَةِ</مقطع>
   <مقطع رقم="٣٨٤">فَإِنَّكَ لَوْ قُلْتَ</مقطع>
   <مقطع رقم="٣٨٥">
      <قول>أَتَانِي الْيَوْمَ قَوِيٌّ</قول>
   </مقطع>
   <مقطع رقم="٣٨٦">و <قول>أَلَا بَارِدًا</قول>
   </مقطع>
   <مقطع رقم="٣٨٧">و <قول>مَرَرْتُ بِجَمِيلٍ</قول>
   </مقطع>
   <مقطع رقم="٣٨٨">كَانَ ضَعِيفًا</مقطع>
   <مقطع رقم="٣٨٩">وَلَمْ يَكُنْ في حُسْنِ</مقطع>
   <مقطع رقم="٣٩٠">
      <قول>أَتَانِي رَجُلٌ قَوِيٌّ</قول>
   </مقطع>
   <مقطع رقم="٣٩١">و <قول>أَلَا مَاءً بارِدًا</قول>
   </مقطع>
   <مقطع رقم="٣٩٢">و <قول>مَرَرْتُ بِرَجُلٍ جَمَيلٍ</قول>
   </مقطع>
   <مقطع رقم="٣٩٣">أَفَلَا تَرَى أَنَّ هٰذَا يَقْبُحُ هٰهُنَا</مقطع>
   <مقطع رقم="٣٩٤">كَمَا أَنَّ الْفِعْلَ الْمُضَارِعَ</مقطع>
   <مقطع رقم="٣٩٥">لَا يُتَكَلَّمُ بِهِ</مقطع>
   <مقطع رقم="٣٩٦">إِلَّا وَمَعَهُ الِاسْمُ</مقطع>
   <مقطع رقم="٣٩٧">لِأَنَّ الِاسْمَ قَبْلَ الصِّفَةِ</مقطع>
   <مقطع رقم="٣٩٨">كَمَا أَنَّهُ قَبْلَ الْفِعْلِ</مقطع>
   <مقطع رقم="٣٩٩">وَمَعَ هٰذَا</مقطع>
   <مقطع رقم="٤٠٠">أَنَّكَ تَرَى الصِّفَةَ</مقطع>
   <مقطع رقم="٤٠١">تَجْرِي في مَعْنَى <حرف>يَفْعَلُ</حرف>
   </مقطع>
   <مقطع رقم="٤٠٢">وتَنْصِبُ كَمَا يَنْصِبُ الْفِعْلُ</مقطع>
   <مقطع رقم="٤٠٣">وَسَتَرَى ذٰلِكَ إِنْ شَاءَ اللّٰهُ</مقطع>
   <مقطع رقم="٤٠٤">فَإِنْ كَانَ اسْمًا</مقطع>
   <مقطع رقم="٤٠٥">كَانَ أَخَفَّ عَلَيْهِمْ</مقطع>
   <مقطع رقم="٤٠٦">وَذٰلِكَ نَحْوُ</مقطع>
   <مقطع رقم="٤٠٧">
      <حرف>أَفْكَلٍ</حرف> و <حرف>أَكْلُبٍ</حرف>
   </مقطع>
   <مقطع رقم="٤٠٨">يَنْصَرِفَانِ في النَّكِرَةِ</مقطع>
   <مقطع رقم="٤٠٩">وَمُضَارَعَةُ <حرف>أَفْعَلَ</حرف>
   </مقطع>
   <مقطع رقم="٤١٠">الَّذِي يَكُونُ صِفَةً لِلِاسْمِ</مقطع>
   <مقطع رقم="٤١١">أَنَّهُ يَكُونُ</مقطع>
   <مقطع رقم="٤١٢">وَهُوَ اسْمٌ</مقطع>
   <مقطع رقم="٤١٣">صِفَةً</مقطع>
   <مقطع رقم="٤١٤">كَمَا يَكُونُ الْفِعْلُ صِفَةً</مقطع>
   <هارون مجلد="١" صفحة="٢١"/>
   <مقطع رقم="٤١٥">وَأَمَّا <حرف>يَشْكُرُ</حرف>
   </مقطع>
   <مقطع رقم="٤١٦">فِإِنَّهُ لَا يَكُونُ صِفَةً</مقطع>
   <مقطع رقم="٤١٧">وَهُوَ اسْمٌ</مقطع>
   <مقطع رقم="٤١٨">وِإِنَّمَا يَكُونُ صِفَةً</مقطع>
   <مقطع رقم="٤١٩">وَهُوَ فِعْلٌ</مقطع>
   <رأس هارون="" يعقوب="" هو="٧">النكرة والمعرفة</رأس>
   <مقطع رقم="٤٢٠">وَاعْلَمْ أَنَّ النَّكِرَةَ</مقطع>
   <مقطع رقم="٤٢١">أَخَفُّ عَلَيْهِمْ مِنَ الْمَعْرِفَةِ</مقطع>
   <مقطع رقم="٤٢٢">وَهِيَ أَشَدُّ تَمَكُّنًا</مقطع>
   <مقطع رقم="٤٢٣">لِأَنَّ النَّكِرَةَ أَوَّلُ</مقطع>
   <مقطع رقم="٤٢٤">ثُمَّ يَدْخُلُ عَلَيْهَا مَا تُعَرَّفُ بِهِ</مقطع>
   <مقطع رقم="٤٢٥">فَمِنْ ثَمَّ أَكْثَرُ الْكَلَامِ</مقطع>
   <مقطع رقم="٤٢٦">يَنْصَرِفُ في النَّكِرَةِ</مقطع>
   <رأس هارون="" يعقوب="" هو="٨">الواحد والجميع</رأس>
   <مقطع رقم="٤٢٧">وَاعْلَمْ أَنَّ الْوَاحِدَ أَشَدُّ تَمَكُّنًا مِنَ الْجَمِيعِ</مقطع>
   <مقطع رقم="٤٢٨">لِأَنَّ الْوَاحِدَ الْأَوَّلُ</مقطع>
   <مقطع رقم="٤٢٩">وِمِنْ ثَمَّ</مقطع>
   <مقطع رقم="٤٣٠">لَمْ يَصْرِفُوا مَا جَاءَ مِنَ الْجَمِيعِ</مقطع>
   <مقطع رقم="٤٣١">مَا جَاءَ على مِثَالٍ</مقطع>
   <مقطع رقم="٤٣٢">لَيْسَ يَكُونُ لِلْوَاحِدِ</مقطع>
   <مقطع رقم="٤٣٣">نَحْوُ <حرف>مَسَاجِدَ</حرف>
   </مقطع>
   <مقطع رقم="٤٣٤">و <حرف>مَفَاتِيحَ</حرف>
   </مقطع>
   <رأس هارون="" يعقوب="" هو="٩">المُذَكَّر والمُؤَنَّث</رأس>
   <مقطع رقم="٤٣٥">وَاعْلَمْ أَنَّ الْمُذَكَّرَ</مقطع>
   <مقطع رقم="٤٣٦">أَخَفُّ عَلَيْهِمْ مِنَ الْمَؤَنَّثِ</مقطع>
   <مقطع رقم="٤٣٧">لِأَنَّ الْمُذَكَّرَ أَوَّلُ</مقطع>
   <مقطع رقم="٤٣٨">وَهُوَ أَشَدُّ تَمَكُّنًا</مقطع>
   <مقطع رقم="٤٣٩">وَإِنَّمَا يَخْرُجُ التَّأْنِيثُ مِنَ التَّذْكِيرِ</مقطع>
   <مقطع رقم="٤٤٠">أَلَا تَرَى أَنَّ الشَّيءَ</مقطع>
   <مقطع رقم="٤٤١">يَقَعُ على كُلِّ مَا أُخْبِرَ عَنْهُ</مقطع>
   <مقطع رقم="٤٤٢">مِنْ قِبَلِ أَنْ يُعْلَمُ</مقطع>
   <مقطع رقم="٤٤٣">أَذَكَرٌ هُوَ أَوْ أُنْثَى</مقطع>
   <مقطع رقم="٤٤٤">وَالـ <حرف>شَّيْءُ</حرف> ذَكَرٌ</مقطع>
   <رأس هارون="" يعقوب="" هو="١٠">التَّنْوِينُ والصَّرْفُ</رأس>
   <مقطع رقم="٤٤٥">فَالتَّنْوِينُ عَلَامَةٌ لِلْأَمْكَنِ عِنْدَهُمْ</مقطع>
   <مقطع رقم="٤٤٦">وَالْأَخَفِّ عَلَيْهِمْ</مقطع>
   <مقطع رقم="٤٤٧">وَتَرْكُهُ</مقطع>
   <مقطع رقم="٤٤٨">عَلَامَةٌ لِمَا يَسْتَثْقِلُونَ</مقطع>
   <مقطع رقم="٤٤٩">وَسَوْفَ يُبَيَّنُ</مقطع>
   <مقطع رقم="٤٥٠">مَا يَنْصَرِفُ وَمَا لَا يَنْصَرِفُ</مقطع>
   <مقطع رقم="٤٥١">إِنْ شَاءَ اللّٰهُ</مقطع>
   <مقطع رقم="٤٥٢">وَجَمِيعُ مَا لَا يَنْصَرِفُ</مقطع>
   <مقطع رقم="٤٥٣">إِذَا أَدْخَلْتَ عَلَيْهِ الْأَلِفَ وَاللَّامَ</مقطع>
   <مقطع رقم="٤٥٤">أَوْ أُضِيفَ</مقطع>
   <مقطع رقم="٤٥٥">انْجَرَّ</مقطع>
   <مقطع رقم="٤٥٦">لِأَنَّهَا<هارون مجلد="١" صفحة="٢٢"/>أَسْمَاءٌ أُدْخِلَ عَلَيْهَا</مقطع>
   <مقطع رقم="٤٥٧">مَا يَدْخُلُ على الْمُنْصَرِفِ</مقطع>
   <مقطع رقم="٤٥٨">وَأُدْخِلَ فِيهَا الْجَرُّ</مقطع>
   <مقطع رقم="٤٥٩">كَمَا يَدْخُلُ في الْمُنْصَرِفِ</مقطع>
   <مقطع رقم="٤٦٠">وَلَا يَكُونُ ذٰلِكَ في الْأَفْعَالِ</مقطع>
   <مقطع رقم="٤٦١">
      <ص><مادة>أمن</مادة>وَأَمِنُوا</ص> التَّنْوِينَ</مقطع>
   <مقطع رقم="٤٦٢">فَجَمِيعُ مَا يُتْرَكُ صَرْفُهُ</مقطع>
   <مقطع رقم="٤٦٣">مُضَارَعٌ بِهِ الْفِعْلُ</مقطع>
   <مقطع رقم="٤٦٤">لِأَنَّهُ</مقطع>
   <مقطع رقم="٤٦٥"> إِنَّمَا فُعِلَ ذٰلِكَ بِهِ</مقطع>
   <مقطع رقم="٤٦٦">لِأَنَّهُ</مقطع>
   <مقطع رقم="٤٦٧"> لَيْسَ لَهُ تَمَكُّنُ غَيْرِهِ</مقطع>
   <مقطع رقم="٤٦٨">كَمَا أَنَّ الْفِعْلَ</مقطع>
   <مقطع رقم="٤٦٩">لَيْسَ لَهُ تَمَكُّنُ الِاسْمِ</مقطع>
   <رأس هارون="" يعقوب="" هو="١١">حَذْفُ الآخِر</رأس>
   <مقطع رقم="٤٧٠">وَاعْلَمْ أَنَّ الْآخِرَ</مقطع>
   <مقطع رقم="٤٧١">إِذَا كَانَ يَسْكُنُ في الرَّفْعِ</مقطع>
   <مقطع رقم="٤٧٢">حُذِفَ في الْجَزْمِ</مقطع>
   <مقطع رقم="٤٧٣">لِئَلَّا يَكُونَ الْجَزْمُ بِمَنْزِلَةِ الرَّفْعِ</مقطع>
   <مقطع رقم="٤٧٤">فَحَذَفُوا</مقطع>
   <مقطع رقم="٤٧٥">كَمَا حَذَفُوا الْحَرَكَةَ وَنُونَ الِاثْنَيْنِ وَالجَمِيعِ</مقطع>
   <مقطع رقم="٤٧٦">وَذٰلِكَ قَوْلُكَ</مقطع>
   <مقطع رقم="٤٧٧">
      <قول>لَمْ يَرْمِ</قول>
   </مقطع>
   <مقطع رقم="٤٧٨">و <قول>لَمْ يَغْزُ</قول>
   </مقطع>
   <مقطع رقم="٤٧٩">و <قول>لَمْ يَخْشَ</قول>
   </مقطع>
   <مقطع رقم="٤٨٠">وَهُوَ في الرَّفْعِ سَاكِنُ الْآخِرِ</مقطع>
   <مقطع رقم="٤٨١">تَقُولُ <قول>هُوَ يَرْمِيْ</قول>
   </مقطع>
   <مقطع رقم="٤٨٢">و <قول>يَغْزُوْ</قول>
   </مقطع>
   <مقطع رقم="٤٨٣">و <قول>يَخْشَىْ</قول>
   </مقطع>
</باب>

