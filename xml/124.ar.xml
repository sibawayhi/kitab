<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     هارون="٢-١٠٥"
     يعقوب="٢-١٠١"
     البكاء="٢-١٨٤"
     رقم="١٢٤">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ مَا يَكُوْنُ الِٱسْمُ فِيْهِ بِمَنْزِلَةِ  <حرف>الَّذِي</حرف>  فِي الْمَعْرِفَةِ إِذَا بُنِيَ عَلَى مَا قَبْلَهُ</مقطع>
       <مقطع رقم="٢">وَبِمَنْزِلَتِهِ فِي الِاحْتِيَاْجِ إِلَى الْحَشْوِ ويَكُوْنُ نَكِرَةً بِمَنْزِلَةِ رَجُلٍ</مقطع>
       <مختصر>هٰذَا بَاْبُ مَا يَكُوْنُ الِٱسْمُ فِيْهِ بِمَنْزِلَةِ  <حرف>الَّذِي</حرف>
      </مختصر>
   </عنوان>
    <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ <قول>هٰذَا مَنْ أَعْرِفُ مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="٤">و<قول>هٰذَا مَنْ لَا أَعْرِفُ مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="٥">أَيْ هٰذَا الَّذِي قَدْ عَلِمْتُ أَنِّي لَا أَعْرِفُهُ مُنْطَلِقًا</مقطع>
    <مقطع رقم="٦">وَهٰذَا مَا عِنْدِي مَهِيْنًا</مقطع>
    <مقطع رقم="٧">وَ<حرف>أَعْرِفُ</حرف>  وَ<حرف>لَا أَعْرِفُ</حرف>  وَ<حرف>عِنْدِي</حرف>  حَشْوٌ لَهُمَا يَتِمَّاْنِ بِهِ</مقطع>
    <مقطع رقم="٨">فَيَصِيْرَاْنِ ٱسْمًا كَمَا كَاْنَ  <حرف>الَّذِي</حرف>  لَا يَتِمُّ إِلَّا بِحَشْوِهِ</مقطع>
    <مقطع رقم="٩">وقَاْلَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ إِنْ شِئْتَ جَعَلْتَ  <حرف>مَنْ</حرف>  بِمَنْزِلَةِ  <حرف>إِنْسَاْنٍ</حرف>  وَجَعَلْتَ  <حرف>مَا</حرف>  بِمَنْزِلَةِ  <حرف>شَيْءٍ</حرف> نَكِرَتَيْنِ</مقطع>
    <مقطع رقم="١٠">ويَصِيْرُ  <حرف>مُنْطَلِقٌ</حرف>  صِفَةً لِـ<حرف>مَنْ</حرف>  و<حرف>مَهِيْنٌ</حرف>  صِفَةً لِ  <حرف>مَا</حرف>
   </مقطع>
    <مقطع رقم="١١">وَزَعَمَ أَنَّ هٰذَا الْبَيْتُ عِنْدَهُ مِثْلُ ذٰلِكَ وهُوَ قَوْلُ الِأنَّصَاْرِيِّ</مقطع>
    <شاهدة رقم="١" xml:id="١٢٤-١">
       <بيت>
          <مصراع>فَكَفَى بِنَا فَضْلًا عَلَى مَنْ غَيْرِنَا</مصراع>
          <مصراع>حُبُّ النَّبِيِّ مُحَمَّدٍ إِيَّاْنَا</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="١٠٥"/>
    <مقطع رقم="١٢">ومِثْلُ ذٰلِكَ قَوْلُ الْفَرَزْدَقِ</مقطع>
    <شاهدة رقم="٢" xml:id="١٢٤-٢">
       <بيت>
          <مصراع>إِنَّي وَإِيَّاْكَ إذْ حَلَّتْ بِأَرْحُلِنَا</مصراع>
          <مصراع>كَمَنْ بِوَاْدِيْهِ بَعْدَ الْمَحْلِ مَمْطُوْرِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٣">وَأَمَّا  <آية>هٰذَا مَا لَدَيَّ عَتِيْدٌ</آية>  فَرَفْعُهُ عَلَى وَجْهَيْن عَلَى  <حرف>شَيْءٍ لَدَيَّ عَتِيْدٌ</حرف>  وَعَلَى  <آية>هٰذَا بَعْلِي شَيْخٌ</آية>
   </مقطع>
    <مقطع رقم="١٤">وَقَدْ أَدْخَلُوْا فِي قَوْلِ مَنْ قَاْلَ إِنَّهُا نَكِرَةٌ</مقطع>
    <مقطع رقم="١٥">فَقَاْلُوْا هَلْ رَأَيْتُمْ شَيْئًا يَكُوْنُ مَوْصُوْفًا لَا يُسْكَتُ عَلَيْهِ</مقطع>
    <مقطع رقم="١٦">فَقِيْلَ لَهُمْ نَعْمٌ <قول>يَا أَيُّهَا الرَّجُلُ</قول>
   </مقطع>
    <مقطع رقم="١٧">
        <حرف>الرَّجُلُ</حرف>  وَصْفٌ لِقَوْلِهِ  <حرف>يَا أَيُّهَا</حرف>  وَلَا يَجُوْزُ أَنْ يُسْكَتَ عَلَى  <حرف>يَا أَيُّهَا</حرف>
   </مقطع>
    <مقطع رقم="١٨">فَرُبَّ ٱسْمٍ لَا يَحْسُنُ عَلَيْهِ عِنْدَهُم السُّكُوْتُ حَتَّى يَصِفُوْهُ</مقطع>
    <مقطع رقم="١٩">وَحَتَّى يَصِيْرُ وَصْفُهُ عِنْدَهُم كَأَنَّهُ بِهِ يَتِمُّ الِٱسْمُ</مقطع>
    <مقطع رقم="٢٠">لِأَنَّهُم إِنَّمَا جَاْءَوْا بِـ<حرف>يَا أَيُّهَا</حرف>  لِيَصِلُوْا أِلَى نَدَاْءِ الَّذِي فِيْهِ الْأَلِفُ وَاللَّاْمُ فَلِذٰلِكَ جِيْءَ بِهِ</مقطع>
    <مقطع رقم="٢١">وَكَذٰلِكَ  <حرف>مَنْ</حرف>  وَ<حرف>مَا</حرف>
   </مقطع>
    <مقطع رقم="٢٢">إِنَّمَا يُذْكَرَاْنِ لِحَشْوِهِمَا وَلِوَصْفِهِمَا ولَمْ يُرَدْ بِهِمَا خِلْوَيْنِ شَيْءٌ فَلَزِمَهُ الْوَصْفُ كَمَا لَزِمَهُ الْحَشْوُ</مقطع>
    <مقطع رقم="٢٣">ولَيْسَ لَهُمَا بِغَيْرِ حَشْوٍ وَلَا وَصْفٍ مَعْنًى</مقطع>
    <مقطع رقم="٢٤">فَمِنْ ثُمَّ كَاْنَ الْوَصْفُ وَالْحَشْوُ وَاْحِدًا</مقطع>
    <هارون مجلد="٢" صفحة="١٠٦"/>
    <مقطع رقم="٢٥">فَالْوَصْفُ كَقَوْلِكَ <قول>مَرَرْتُ بِمَنْ صَاْلِحٍ</قول> فَـ<حرف>صَاْلِحٌ</حرف> وَصْفٌ</مقطع>
    <مقطع رقم="٢٦">وَإِنْ أَرَدْتَ الْحَشْوَ قُلْتَ <قول>مَرَرْتُ بِمَنْ صَاْلِحٌ</قول> فَيَصِيْرُ  <حرف>صَاْلِحٌ</حرف>  خَبَرًا لِشَيْءٍ مُضْمَرٍ</مقطع>
    <مقطع رقم="٢٧">كأَنَّكَ قُلْتَ <قول>مَرَرْتُ بِمَنْ هُوَ صَاْلِحٌ</قول>
   </مقطع>
    <مقطع رقم="٢٨">وَالْحَشْوُ لَا يَكُوْنُ أَبَدًا لِـ<حرف>مَنْ</حرف>  و<حرف>مَا</حرف>  إِلَّا وَهُمَا مَعْرِفَةٌ</مقطع>
    <مقطع رقم="٢٩">وَذٰلِكَ مِنْ قِبَلِ أَنَّ الْحَشْوَ إِذَا صَاْرَ فِيْهِمَا أَشْبَهَتَا  <حرف>الَّذِي</حرف>
   </مقطع>
    <مقطع رقم="٣٠">فَكَمَا أَنَّ  <حرف>الَّذِي</حرف>  لَا يَكُوْنُ إِلَّا مَعْرِفَةً</مقطع>
    <مقطع رقم="٣١">لَا يَكُوْنُ  <حرف>مَا</حرف>  وَ<حرف>مَنْ</حرف>  إِذَا كَاْنَ الَّذِي بَعْدَهُمَا حَشْوًا وَهُوَ الصِّلَةُ إِلَّا مَعْرِفَةً</مقطع>
    <مقطع رقم="٣٢">وَتَقُوْلُ <قول>هٰذَا مَنْ أَعْرِفُ مُنْطَلِقٌ</قول> فَتَجْعَلُ  <حرف>أَعْرِفُ</حرف> صِفَةً</مقطع>
    <مقطع رقم="٣٣">وَتَقُوْلُ <قول>هٰذَا مَنْ أَعْرِفُ مُنْطَلِقًا</قول> تَجْعَلُ  <حرف>أَعْرِفُ</حرف> صِلَةً</مقطع>
    <مقطع رقم="٣٤">وَقَدْ يَجُوْزُ  <حرف>مُنْطَلِقٌ</حرف>  عَلَى قَوْلِكَ <قول>هٰذَا عَبْدُ اللّٰهِ مُنْطَلِقٌ</قول>
   </مقطع>
    <مقطع رقم="٣٥">ومِثْلُ ذٰلِكَ  <حرف>الْجَمَّاْءُ الْغَفِيْرُ</حرف>  [ فَـ<حرف>الْغَفِيْرُ</حرف>  ] وَصْفٌ لَازِمٌ وَهُوَ تَوْكِيْدٌ</مقطع>
    <مقطع رقم="٣٦">لِأنَّ  <حرف>الْجَمَّاْءَ الْغَفِيْرَ</حرف>  مَثَلٌ فَلَزِمَ  <حرف>الْغَفِيْرُ</حرف>  كَمَا لَزِمَ  <حرف>مَا</حرف>  فِي قَوْلِكَ <قول>إِنَّكَ مَا وَخَيْرًا</قول>
   </مقطع>
    <مقطع رقم="٣٧">وَٱعْلَمْ أَنَّ <قول>كَفَى بِنَا فَضْلًا عَلَى مَنْ غَيْرُنًا</قول> أَجْوَدُ وفِيْهِ ضَعْفٌ إِلَّا أَنْ يَكُوْنَ فِيْهِ  <حرف>هُوَ</حرف>
   </مقطع>
    <مقطع رقم="٣٨">[ لِأنَّ  <حرف>هُوَ</حرف>  مِنْ بَعْضِ الصِّلَةِ ] وهُوَ نَحْوُ <قول>مَرَرْتُ بِأَيُّهُمْ أَفْضَلُ</قول>
   </مقطع>
    <هارون مجلد="٢" صفحة="١٠٧"/>
    <مقطع رقم="٣٩">وكَمَا قَرَأَ بَعْضُ النَّاْسِ هٰذِهِ الآيَةَ  <آية>تَمَاْمًا عَلَى الَّذِي أَحْسَنَ</آية>
   </مقطع>
    <مقطع رقم="٤٠">وَٱعْلَمْ أَنَّهُ يَقْبُحُ أَنْ تَقُوْلَ <قول>هٰذَا مَنْ مُنْطَلِقٌ</قول> إِذَا جَعَلْتَ الْـ<حرف>مُنْطَلِقَ</حرف>  حَشْوًا أَوْ وَصْفًا</مقطع>
    <مقطع رقم="٤١">فَإِنْ أَطَلْتَ الْكَلَامَ فَقُلْتَ <قول>مَنْ خَيْرٌ مِنْكَ</قول> حَسُنَ فِي الْوَصْفِ وَالْحَشْوِ</مقطع>
    <مقطع رقم="٤٢">زَعَمَ الْخَلِيْلُ رَحِمَهُ اللّٰهُ أَنَّهُ سَمِعَ مِنَ الْعَرَبِ رَجُلًا يَقُوْلُ <قول>مَا أَنَا بِالَّذِي قَاْئِلٌ لَكَ سُوْءًا</قول>
   </مقطع>
    <مقطع رقم="٤٣">و<قول>مَا أَنَا بِالَّذِي قَاْئِلٌ لَكَ قَبِيْحًا</قول>
   </مقطع>
    <مقطع رقم="٤٤">فَالْوَصْفُ بِمَنْزِلَةِ الْحَشْوِ [ الْمَحْشُوِّ ] لِأَنَّهُ يَحْسُنُ بِمَا بَعْدَهُ كَمَا أَنَّ الْحَشْوَ [ الْمَحْشُوَّ ] إِنَّمَا يَتِمُّ بِمَا بَعْدَهُ</مقطع>
    <مقطع رقم="٤٥">وَيُقَوِّي أَيْضًا أَنَّ  <حرف>مَنْ</حرف>  نَكِرَةٌ قَوْلُ عَمْرٍو بْنِ قَمِيْئَةٍ</مقطع>
    <شاهدة رقم="٣" xml:id="١٢٤-٣">
       <بيت>
          <مصراع>يَا رُبَّ مَنْ يُبْغِضُ أَذْوَاْدَنَا</مصراع>
          <مصراع>رُحْنَ عَلَى بغْضاْئِهِ وَاغْتَدَيْنَ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٦">وَ<حرف>رُبَّ</حرف>  لَا يَكُوْنُ مَا بَعْدَهَا إِلَّا نَكِرَةٌ</مقطع>
    <مقطع رقم="٤٧">وقَاْلَ أُمَيَّةُ بْنُ أَبِي الصَّلت</مقطع>
    <هارون مجلد="٢" صفحة="١٠٨"/>
    <شاهدة رقم="٤" xml:id="١٢٤-٤">
       <بيت>
          <مصراع>رُبَّ مَا تَكْرَهُ النُّفُوْسُ مِنَ الأَمْرِ</مصراع>
          <مصراع>لَهُ فَرْجَةٌ كَحَلِّ الْعِقَاْلِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٨">وَقَاْلَ آخَرُ</مقطع>
    <شاهدة رقم="٥" xml:id="١٢٤-٥">
       <بيت>
          <مصراع>أَلا رُبَّ مَنْ تَغْتَشُّهُ لَكَ نَاْصِحٌ</مصراع>
          <مصراع>وَمُؤْتَمَنِ بِالْغَيْبِ غَيْرِ أَمِيْنِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٩">وقَاْلَ آخَرُ</مقطع>
    <شاهدة رقم="٦" xml:id="١٢٤-٦">
       <بيت>
          <مصراع>أَلا رُبَّ مَنْ قَلْبِي لَهُ اللهُ نَاْصِحٌ</مصراع>
          <مصراع>وَمَنْ هُوَ عِنْدَي فِي الظِّبَاْءِ السَّوَاْنِحِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="١٠٩"/>
</باب>
