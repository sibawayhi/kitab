<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="١٧٤">
   <عنوان>
      <مقطع>هذا باب ما رخمت الشعراء في غير النداء اضطرارا</مقطع>
   </عنوان>
   <مقطع>قال الراجز</مقطع>
<شاهدة>
<بيت>
<مصراع>
وقد وسَطْتُ مالِكا وحَنْظَلاً
</مصراع>
</بيت>
</شاهدة>

   <هارون مجلد="٢" صفحة="٢٦٩"/>
   <مقطع>وقال ابن أحمر</مقطع>
<شاهدة>
<بيت>
         <مصراع>أبو حَنَشٍ يؤرقُنا وطَلْقٌ</مصراع>
         <مصراع>وعَمّارٌ وآوِنةً أُثالا</مصراع>
</بيت>
      </شاهدة>
<مقطع>يريد أثالة</مقطع>
   <مقطع>وقال جرير</مقطع>
<شاهدة>
<بيت>
         <مصراع>أَلا أَضْحتْ حِبالُكُم رِماماً</مصراع>
         <مصراع>وأَضحتْ منكَ شاسِعةً أُماماَ</مصراع>
</بيت>
      <هارون مجلد="٢" صفحة="٢٧٠"/>
<بيت>
         <مصراع>يَشُقُّ بها العَساقِلَ مؤْجداتٌ</مصراع>
         <مصراع>وكلُّ عَرَنْدَسٍ يَنْفِى الُّلغاماَ</مصراع>
</بيت>
      </شاهدة>

   <مقطع>وقال زهير</مقطع>
<شاهدة>
<بيت>
         <مصراع>خذُوا حَظَّكمْ يا آلَ عِكْرِمَ واذْكُرُوا</مصراع>
         <مصراع>أَواصِرَنا والرِّحْمُ بالغَيْبِ تُذْكَرُ</مصراع>
</بيت>
      </شاهدة>

   <مقطع>وقال آخر وهو ابن حبناء التميمي</مقطع>
<هارون مجلد="٢" صفحة="٢٧١"/>

<شاهدة>
<بيت>
         <مصراع>إنّ ابنَ حارِثَ إنْ أَشْتَقْ لرُؤْيِته</مصراع>
         <مصراع>أو أَمتدِحْه فإنّ الناسَ قد عَلِمُوا</مصراع>
</بيت>
      </شاهدة>

   <مقطع>وأما قول الأسود بن يعفر</مقطع>
<شاهدة>
<بيت>
         <مصراع>أَوْدَى ابنُ جُلْهُمَ عَبّادٌ بِصرْمِته</مصراع>
         <مصراع>إنّ ابن جُلْهُمَ أَمْسَى حَيّةَ الوادِى</مصراع>
</بيت>
      </شاهدة>

   <مقطع>فإنما أراد أمه جلهم</مقطع>
   <مقطع>والعرب يسمون المرأة جلهم والرجل جلهمة</مقطع>
   <مقطع>وأما قوله وهو رجل من بنى يشكر<هارون مجلد="٢" صفحة="٢٧٢"/>
      </مقطع>
<شاهدة>
<بيت>
         <مصراع>لَها أَشاريرُ من لْحَمٍ تُتَمّرُهُ</مصراع>
         <مصراع>من الثَّعالِى ووَخْزٌ من ؟ ؟</مصراع>
</بيت>
      </شاهدة>

   <مقطع>فزعم أن الشاعر لما اضطر إلى الياء أبدلها مكان الباء كما يبدلها مكان الهمزة</مقطع>
   <مقطع>وقال أيضا</مقطع>
<شاهدة>
<بيت>
         <مصراع>ومَنْهَلٍ ليس له حَوازِقُ</مصراع>
         <مصراع>ولِضَفادِى جَمِّهِ نَقانِقُ</مصراع>
</بيت>
      </شاهدة>
      <هارون مجلد="٢" صفحة="٢٧٣"/>
<مقطع>وإنما أراد ضفادع فلما اضطر إلى أن يقف آخر الاسم كره أن يقف حرفا لا يدخله الوقف في هذا الموضع فأبدل مكانه حرفا يوقف في الجر والرفع</مقطع>
   <مقطع>وليس هذا لأنه حذف شيئا فجعل الياء عوضا منه لو كان ذلك لعوضت حارثا الياء حيث حذفت الثاء وجعلت البقية بمنزلة اسم ينصرف في الكلام على ثلاثة أحرف وذلك حين قلت يا حار</مقطع>
   <مقطع>ولو قلت هذا لقلت يا مروى إذا أردت أن تجعل ما بقى من مروان بمنزلة ما بقى من حارث حين قلت يا حار</مقطع>
</باب>
