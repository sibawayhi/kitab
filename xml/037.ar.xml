    <مقطع رقم="١٧٤">لَوْ كَانَ عَلَيْهِ الْأَوَّلُ</مقطع>
    <مقطع رقم="١٧٥">لَمْ يَنْقُضْ الْحَدِيْثَ</مقطع>
    <مقطع رقم="١٧٦">وَالْجَرُّ</مقطع>
