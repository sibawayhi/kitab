    <مقطع رقم="٩٢">فَحَمَلَهُ عَلَى الْمَعْنَى</مقطع>
    <مقطع رقم="٩٣">كَأَنَّهُ قَالَ <قول>وَأَعْطِنِىْ أَبْيَضَ مَصْقُوْلَ السْطَامِ</قول>
   </مقطع>
    <مقطع رقم="٩٤">وَقَالَ <قول>هَاتِ مِثْلَ أُسَرِّةٍ مَنْظُوْرِ بْنِ سَيَّارٍ</قول>
   </مقطع>
    <مقطع رقم="٩٥">وَالنَّصْبُ في الْأَوَّلِ أَقْوَى وَأَحْسَنُ</مقطع>
    <مقطع رقم="٩٦">لِأَنَّكَ أَدْخَلْتَ الْجَرَّ عَلَى الْحَرْفِ النَّاصِبِ</مقطع>
    <مقطع رقم="٩٧">وَلَمْ تَجِئْ هٰهُنَا إِلَّا بِمَا أَصْلُهُ الْجَرُّ</مقطع>
    <مقطع رقم="٩٨">وَلَمْ تُدْخِلْهُ عَلَى نَاصِبٍ وَلَا رَافِعٍ</مقطع>
    <مقطع رقم="٩٩">وَهُوَ عَلَى ذٰلِكَ عَرَبِىٌّ جَيِّدٌ</مقطع>
    <مقطع رقم="١٠٠">وَالْجّرُ أَجْوَدُ</مقطع>
    <مقطع رقم="١٠١">وَقَالَ رَجُلٌ مِنَ قَيْسٍ عَيْلَانَ</مقطع>
    <هارون مجلد="١" صفحة="١٧٠"/>
    <شاهدة رقم="١٣" xml:id="٣٧-١٣">
       <بيت>
          <مصراع>بَيِّنَا نَحْنُ نَطْلُبُهُ أَتَانَا</مصراع>
          <مصراع>مُعَلَّقَ وَفْضَةٍ وَزِنَادَ رَاعِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٠٢">وَزَعَمَ عِيْسَى</مقطع>
    <مقطع رقم="١٠٣">أَنَّهُمْ يُنْشِدُوْنَ</مقطع>
    <مقطع رقم="١٠٤">هٰذَا الْبَيْتَ</مقطع>
    <شاهدة رقم="١٤" xml:id="٣٧-١٤">
       <بيت>
          <مصراع>هَلْ أَنْتَ بَاعِثُ دِيْنَارٍ لِحَاجَّتِنا</مصراع>
          <مصراع>أَوْ عَبْدَ رَبَّ أُخَاعُونَ بْنِ مِخْرَاقِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٠٥">فَإِذَا أَخْبَرَ</مقطع>
