    <مقطع رقم="١٨١">لِأَنَّهُ اسْمٌ</مقطع>
    <مقطع رقم="١٨٢">وَإِنْ كَانَ قَدْ جَرَى</مقطع>
    <مقطع رقم="١٨٣">مَجْرَى الْفِعْلِ بِعَيْنِهِ</مقطع>
    <مقطع رقم="١٨٤">وَالنَّصْبُ</مقطع>
    <مقطع رقم="١٨٥">في الْفَصْلِ أَقْوَى</مقطع>
    <مقطع رقم="١٨٦">إِذَا قُلْتَ</مقطع>
    <مقطع رقم="١٨٧">
       <قول>هٰذَا ضَارِبُ زْيَدٍ فِيْهَا وَعَمْرًا</قول>
   </مقطع>
    <مقطع رقم="١٨٨">كُلَّمَا</مقطع>
    <مقطع رقم="١٨٩">طَالَ الْكَلَامُ</مقطع>
    <مقطع رقم="١٩٠">كَانَ أَقْوَى</مقطع>
    <مقطع رقم="١٩١">وَذٰلِكَ أَنَّكَ</مقطع>
    <مقطع رقم="١٩٢">لَا تَفْصِلُ</مقطع>
    <مقطع رقم="١٩٣">بَيْنَ الْجَارِّ</مقطع>
