    <هارون مجلد="١" صفحة="١٧٤"/>
    <مقطع رقم="٢٠٠">وَكَذٰلِكَ</مقطع>
    <مقطع رقم="٢٠١">إِنْ جِئْتَ</مقطع>
    <مقطع رقم="٢٠٢">بِاسْمِ الْفَاعِلِ</مقطع>
    <مقطع رقم="٢٠٣">الَّذِىْ تَعَدَّى فَعْلُهُ</مقطع>
    <مقطع رقم="٢٠٤">إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع رقم="٢٠٥">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٢٠٦">
       <قول>هٰذَا مُعْطِي زَيْدٍ دِرْهَمًا وَعَمْرُوٍ</قول>
   </مقطع>
    <مقطع رقم="٢٠٧">إِذَا لَمْ تُجْرِهِ</مقطع>
    <مقطع رقم="٢٠٨">عَلَى  <حرف>الدِّرْهَمِ</حرف>
   </مقطع>
    <مقطع رقم="٢٠٩">وَالنَّصْبُ عَلَى</مقطع>
    <مقطع رقم="٢١٠">مَا نَصَبْتَ عَلَيْهِ</مقطع>
    <مقطع رقم="٢١١">مَا قَبْلَهُ</مقطع>
    <مقطع رقم="٢١٢">وَتَقُوْلُ</مقطع>
    <مقطع رقم="٢١٣">
       <قول>هٰذَا مُعْطِي زَيْدٍ وَعَبْدَ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٢١٤">وَالنَّصْبُ</مقطع>
    <مقطع رقم="٢١٥">إِذَا ذَكَرْتَ الدِّرْهَمَ</مقطع>
    <مقطع رقم="٢١٦">أَقْوَىْ</مقطع>
    <مقطع رقم="٢١٧">لِأَنَّكَ</مقطع>
    <مقطع رقم="٢١٨">قَدْ فَصَلْتَ بَيْنَهُمَا</مقطع>
    <مقطع رقم="٢١٩">وَإِنْ لَمْ تُرِدْ</مقطع>
    <مقطع رقم="٢٢٠">بِالِاسْمِ</مقطع>
    <مقطع رقم="٢٢١">الَّذِىْ يَتَعَدَّى فَعْلُهُ</مقطع>
    <مقطع رقم="٢٢٢">إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع رقم="٢٢٣">أَنْ يَكُوْنَ الْفِعْلُ</مقطع>
    <مقطع رقم="٢٢٤">قَدْ وَقَعَ</مقطع>
    <مقطع رقم="٢٢٥">أَجْرَيْتَهُ</مقطع>
    <مقطع رقم="٢٢٦">مَجْرَى الْفِعْلِ</مقطع>
    <مقطع رقم="٢٢٧">الَّذِي يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
    <مقطع رقم="٢٢٨">فِي التَّنْوِينِ</مقطع>
    <مقطع رقم="٢٢٩">وَتَرْكِ التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٢٣٠">وَأَنْتَ تُرِيْدُ مَعْنَاهُ</مقطع>
    <مقطع رقم="٢٣١">وَفي النَّصْبِ وَالْجَرُِ</مقطع>
    <مقطع رقم="٢٣٢">وَجَمِيْعِ أَحْوَالِهِ</مقطع>
    <مقطع رقم="٢٣٣">فَإِذَا نَوَّنْتَ</مقطع>
    <مقطع رقم="٢٣٤">فَقُلْتَ</مقطع>
    <مقطع رقم="٢٣٥">
       <قول>هٰذَا مُعْطٍ زَيْدًا دِرْهَمًا</قول>
   </مقطع>
    <مقطع رقم="٢٣٦">لَا تُبَالِ</مقطع>
    <مقطع رقم="٢٣٧">أَيَّهُمَا قَدَّمْتَ</مقطع>
    <مقطع رقم="٢٣٨">لِأَنَّهُ يَعْمَلُ</مقطع>
    <مقطع رقم="٢٣٩">عَمَلَ الْفِعْلِ</مقطع>
    <مقطع رقم="٢٤٠">وَإِنْ لَمْ تُنَوِّنْ</مقطع>
    <مقطع رقم="٢٤١">لَمْ يَجُزْ هٰذَا</مقطع>
    <مقطع رقم="٢٤٢">
       <قول>مُعْطِي دِرْهَمًا زَيْدٍ</قول>
   </مقطع>
    <مقطع رقم="٢٤٣">لِأَنَّكَ لَا تَفْصِلُ</مقطع>
    <مقطع رقم="٢٤٤">بَيْنَ الْجَارِّ وَالْمَجْرُوْرِ</مقطع>
    <مقطع رقم="٢٤٥">لِأَنَّهُ دَاخِلٌ</مقطع>
    <مقطع رقم="٢٤٦">في الْاسْمِ</مقطع>
    <مقطع رقم="٢٤٧">فَإِذَا نَوَّنْتَ</مقطع>
    <مقطع رقم="٢٤٨">انْفَصَلَ</مقطع>
    <مقطع رقم="٢٤٩">كانْفِصَالِهِ في الْفِعْلِ</مقطع>
    <مقطع رقم="٢٥٠">فَلَا يَجُوْزُ</مقطع>
    <مقطع رقم="٢٥١">إِلَّا في قَوْلِهِ</مقطع>
    <مقطع رقم="٢٥٢">
       <قول>هٰذَا مُعْطِي دِرْهَمٍ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٢٥٣">كَمَا قَالَ تَعَالَى جَدُّهُ</مقطع>
