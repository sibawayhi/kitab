    <مقطع رقم="١٢٩">الْجَرُّ</مقطع>
    <مقطع رقم="١٣٠">لِأَنَّهُ</مقطع>
    <مقطع رقم="١٣١">لَيْسَ مَوْضِعًا</مقطع>
    <مقطع رقم="١٣٢">لِلَتَّنْوِيْنِ</مقطع>
    <مقطع رقم="١٣٣">وَكَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٣٤">
       <قول>هٰذَا ضَارِبُ زْيَدٍ فِيْهَا وَأَخِيْهِ</قول>
   </مقطع>
    <مقطع رقم="١٣٥">وَ<قول>هٰذَا قَاتِلُ عَمْرٍو أَمْسِ وَعَبْدِ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="١٣٦">وَ<قول>هٰذَا ضَارِبُ عَبْدِ اللّٰهِ ضَرْبًا شَدِيْدًا وَعَمْرُوٍ</قول>
