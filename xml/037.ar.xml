    <مقطع رقم="٨٩">أَوْ <قول>وَضَارِبٌ عَمْرًا</قول>
   </مقطع>
    <مقطع رقم="٩٠">وَمِمَّا جَاءَ عَلَى الْمَعْنَى قَوْلُ جَرِيْرٍ</مقطع>
    <هارون مجلد="١" صفحة="١٦٩"/>
