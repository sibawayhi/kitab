    <مقطع رقم="١٠٩">أَلْبَتَّةَ</مقطع>
    <مقطع رقم="١١٠">لِأَنَّهُ إِنَّمَا</مقطع>
    <مقطع رقم="١١١">أُجْرِيَ مُجْرَى الْفِعْلِ الْمُضَارِعِ لَهُ</مقطع>
    <مقطع رقم="١١٢">كَمَا أَشْبَهَهُ الْفَعَلُ الْمُضَارِعُ</مقطع>
    <مقطع رقم="١١٣">في الْإِعْرَابِ</مقطع>
    <مقطع رقم="١١٤">فَكُلُّ وَاحِدٍ مِنْهُمَا</مقطع>
    <مقطع رقم="١١٥">دَاخِلٌ عَلَى صَاحِبِهِ</مقطع>
    <مقطع رقم="١١٦">فَلَمَّا أَرَادَ</مقطع>
    <مقطع رقم="١١٧">سِوَى ذٰلِكَ الْمَعْنَى</مقطع>
    <مقطع رقم="١١٨">جَرَى مَجْرَى الْأَسْمَاءِ</مقطع>
    <مقطع رقم="١١٩">الَّتِي مِنْ غَيْرِ ذٰلِكَ الْفِعْلِ</مقطع>
    <مقطع رقم="١٢٠">لِأَنَّهُ إِنَّمَا</مقطع>
    <مقطع رقم="١٢١">شُبِّهَ بِمَا ضَارَعَهُ</مقطع>
    <مقطع رقم="١٢٢">مِنَ الْفَعْلِ</مقطع>
    <مقطع رقم="١٢٣">كَمَا شُبِّهَ بِهِ</مقطع>
    <مقطع رقم="١٢٤">في الْإِعْرَابِ</مقطع>
    <مقطع رقم="١٢٥">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٢٦">
