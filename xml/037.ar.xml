<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨٢"
     درنبورج="١-٧٠"
     هارون="١-١٦٤"
     يعقوب="١-٢١٨"
     البكاء="١-٢٣٧"
     رقم="٣٧">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَابٌ مِنِ اسْمِ الْفَاعِلِ</مقطع>
       <مقطع رقم="٢">الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ</مقطع>
       <مقطع رقم="٣">في الْمَفْعُوْلِ في الْمَعْنَى</مقطع>
       <مقطع رقم="٤">فَإِذَا أَرَدْتَ فِيْهِ مِنَ الْمَعْنَى</مقطع>
       <مقطع رقم="٥">مَا أَرَدْتَ في  <حرف>يَفْعَلُ</حرف>
      </مقطع>
       <مقطع رقم="٦">كَانَ نَكِرَةً مِنَوَّنَا</مقطع>
       <مختصر>هٰذَا بَابٌ مِنِ اسْمِ الْفَاعِلِ الَّذِي جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ في الْمَفْعُوْلِ في الْمَعْنَى</مختصر>
   </عنوان>
    <مقطع رقم="٧">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٨">
       <قول>هٰذَا ضَارِبٌ زَيْدًا غَدًا</قول>
   </مقطع>
    <مقطع رقم="٩">فَمَعْنَاهُ وَعَمَلُهُ مِثْلُ</مقطع>
    <مقطع رقم="١٠">
       <قول>هٰذَا يَضْرِبُ زَيْدًا غَدًا</قول>
   </مقطع>
    <مقطع رقم="١١">فَإِذَا حَدَّثْتَ عَنِ فِعْلٍ</مقطع>
    <مقطع رقم="١٢">في حِيْنِ وُقُوْعِهِ</مقطع>
    <مقطع رقم="١٣">غَيْرِ مُنْقَطِعٍ</مقطع>
    <مقطع رقم="١٤">كَانَ كَذٰلِكَ</مقطع>
    <مقطع رقم="١٥">وَتَقُوْلُ</مقطع>
    <مقطع رقم="١٦">
       <قول>هٰذَا ضَارِبٌ عَبْدَ اللّٰهِ السَّاعَةَ</قول>
   </مقطع>
    <مقطع رقم="١٧">فَمَعْنَاهُ وَعَمَلُهُ مِثْلُ</مقطع>
    <مقطع رقم="١٨">
       <قول>هٰذَا يَضْرِبُ زَيْدًا السَّاعَةَ</قول>
   </مقطع>
    <مقطع رقم="١٩">وَ<قول>كَانَ زَيْدٌ ضَارِبًا أَبَاكَ</قول>
   </مقطع>
    <مقطع رقم="٢٠">فَإِنَّمَا تُحَدِّثُ أَيَضًا</مقطع>
    <مقطع رقم="٢١">عَنِ اتِّصَالِ فِعْلٍ</مقطع>
    <مقطع رقم="٢٢">في حَالِ وُقُوْعِهِ</مقطع>
    <مقطع رقم="٢٣">وَ<قول>كَانَ مُوَافِقًا زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٢٤">فَمَعْنَاهُ وَعَمَلُهُ كَقَوْلِكَ</مقطع>
    <مقطع رقم="٢٥">
       <قول>كَانَ يَضْرِبُ أَبَاكَ</قول>
   </مقطع>
    <مقطع رقم="٢٦">وَ<قول>يُوَافِقُ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٢٧">فَهٰذَا جَرَى مَجْرَى الْفِعْلِ الْمُضَارِعِ</مقطع>
    <مقطع رقم="٢٨">في الْعَمَلِ وَالْمَعْنَى</مقطع>
    <مقطع رقم="٢٩">مُنَوَّنًا</مقطع>
    <مقطع رقم="٣٠">وَمِمَّا جَاءَ في الشِّعْرِ</مقطع>
    <مقطع رقم="٣١">مُنَوَّنَا</مقطع>
    <مقطع رقم="٣٢">مِنْ هٰذَا الْبَابِ</مقطع>
    <مقطع رقم="٣٣">قَوْلُهُ</مقطع>
    <شاهدة رقم="١" xml:id="٣٧-١">
       <بيت>
          <مصراع>إِنِّىٓ بِحَبْلِكَ وَاصِلٌ حَبْلِىَ</مصراع>
          <مصراع>وَبِرِيشِ نَبْلِكَ رَائِشٌ نُبَلَىْ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٤">وَقَالَ عُمَرُ بِنُ أَبِىْ رَبِيْعَةَ</مقطع>
    <هارون مجلد="١" صفحة="١٦٤"/>
    <شاهدة رقم="٢" xml:id="٣٧-٢">
       <بيت>
          <مصراع>وَمِنْ مَالِئٍ عَيْنَيْهِ مِنْ شَئٍ غَيْرِهِ</مصراع>
          <مصراع>إِذَا رَاحَ نَحْوَ الْجَمَرَةِ الْبِيضُ كَالْدُّمَى</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٥">وَقَالَ زُهَيْرُ</مقطع>
    <شاهدة رقم="٣" xml:id="٣٧-٣">
       <بيت>
          <مصراع>بَدَا لِىَ أَنَّىَ لَسْتُ مُدْرِكَ مَا مَضَىْ</مصراع>
          <مصراع>وَلَا سَابِقَا شَيْئا إِذَا كَانَ جَائِيّا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٦">وَقَالَ الأَخُوصِ الرِّيَاحْى</مقطع>
    <شاهدة رقم="٤" xml:id="٣٧-٤">
       <بيت>
          <مصراع>مَشَائِيمُ لَيْسُوْا مُصْلِحِيْنَ عَشِيْرةً</مصراع>
          <مصراع>وَلَا نَاعِبَا إِلَا بَبَينَ غُرَابُهَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٧">وَاعْلَمْ أَنَّ الْعَرَبَ يَسْتَخِفُّوْنَ فَيَحْذِفُوْنَ التَّنْوِينَ وَالنُّوْنَ</مقطع>
    <مقطع رقم="٣٨">وَلَا يَتَغَيَّرْ مِنَ الْمَعْنَى <هارون مجلد="١" صفحة="١٦٥"/>شَيءٌ</مقطع>
    <مقطع رقم="٣٩">وَيَنْجَرُّ الْمَفْعُوْلُ لِكَفِّ التَّنْوِيْنِ مِنَ الْاسْمِ</مقطع>
    <مقطع رقم="٤٠">فَصَارَ عَمَلُهُ فِيْهِ الْجَرَّ</مقطع>
    <مقطع رقم="٤١">وَدَخَلَ في الْاسْمِ مُعَاقِبًا لِلَتَّنْوِيْنِ</مقطع>
    <مقطع رقم="٤٢">فَجَرَىَ مَجْرَى  <حرف>غُلَامِ عَبْدِ اللّٰهِ</حرف>  في اللَّفْظِ</مقطع>
    <مقطع رقم="٤٣">لِأَنَّهُ اسْمٌ وَإِنْ كَانَ لَيْسَ مِثْلَهُ في الْمَعْنَى وَالْعَمَلِ</مقطع>
    <مقطع رقم="٤٤">وَلَيْسَ يُغَيَّرُ كَفُّ التَّنْوِيْنِ إِذَا حَذَفْتَهُ مُسْتَخِفًّا شَيْئًا مِنْ الْمَعْنَى</مقطع>
    <مقطع رقم="٤٥">وَلَا يَجْعَلُهُ مَعَرِفَةً</مقطع>
    <مقطع رقم="٤٦">فَمِنْ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
    <مقطع رقم="٤٧">
        <آية>كُلُّ نَفْسٍ ذَائِقَةُ الْمَوْتِ</آية>
   </مقطع>
    <مقطع رقم="٤٨">وَ<آية>إِنَّا مُرْسِلُوا الْنَّاقَةِ</آية>
   </مقطع>
    <مقطع رقم="٤٩">وَ<آية>لَوْ تَرَى إِذِ الْمُجْرِمُوْنَ نَاكِسُوْ رِءُسِهُمْ</آية>
   </مقطع>
    <مقطع رقم="٥٠">وَ<آية>غَيْرَ مُحِلِّيْ الْصَّيْدِ</آية>
   </مقطع>
    <مقطع رقم="٥١">فَالْمَعْنَى مَعْنَى</مقطع>
    <مقطع رقم="٥٢">
        <آية>وَلَا آّمِّيِّنَ الْبَيْتَ الْحَرَامَ</آية>
   </مقطع>
    <مقطع رقم="٥٣">وَيَزِيْدُ هٰذَا عِنْدَكَ بَيَانًا قَوْلُهُ تَعَالَىْ جَدُّهُ</مقطع>
    <مقطع رقم="٥٤">
        <آية>هَدْيًا بَالِغَ الْكَعْبَةِ</آية>
   </مقطع>
    <مقطع رقم="٥٥">وَ<آية>عَارِضٌ مُّمْطِرُنَا</آية>
   </مقطع>
    <مقطع رقم="٥٦">فَلَوْ لَمْ يَكُنْ هٰذَا</مقطع>
    <مقطع رقم="٥٧">في مَعْنَى النَّكِرَةِ وَالتَّنْوِيْنِ</مقطع>
    <مقطع رقم="٥٨">لَمْ تُوْصَفْ بِهِ النَّكِرَةُ</مقطع>
    <مقطع رقم="٥٩">وَسَتَرَاهُ مُفَصَّلَا أَيْضًا في بِابِهِ مَعَ غَيْرِ هٰذَا مِنْ الْحُجَجِ إِنِ شَاءَ اللّٰهُ</مقطع>
    <مقطع رقم="٦٠">وَقَالَ الْخَلِيْلِ</مقطع>
    <مقطع رقم="٦١">
       <قول>هُوَ كَائِنُ أَخِيْكَ</قول>
   </مقطع>
    <مقطع رقم="٦٢">عَلَى الِاسْتِخْفَافِ</مقطع>
    <مقطع رقم="٦٣">وَالْمَعْنَى <قول>هُوَ كَائِنٌ أَخَاكَ</قول>
   </مقطع>
    <مقطع رقم="٦٤">وَمِمَّا جَاءَ في الشِّعْرِ غَيْرُ مُنَوَّنٍ قَوْلُ الْفَرَزْدَقِ</مقطع>
    <هارون مجلد="١" صفحة="١٦٦"/>
    <شاهدة رقم="٥" xml:id="٣٧-٥">
       <بيت>
          <مصراع>أَتَانِّىْ عَلَى الْقَعْسَاءِ عَادِلَ وَطَبِهُ</مصراع>
          <مصراع>بِرِجَلَىْ لَئِيمٌ وَاسْتِ عَبْدٍ تُعادِلَّهُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٦٥">يُرِيْدُ  <حرف>عَادِلًا وَطْبَهُ</حرف>
   </مقطع>
    <مقطع رقم="٦٦">وَقَالَ الْزِّبْرِقَانُ بْنِ بَدْرٍ</مقطع>
    <شاهدة رقم="٦" xml:id="٣٧-٦">
       <بيت>
          <مصراع>مُسْتَحْقِبى حَلَقِ الْمَاذِىَّ يَحْفِزُهُ</مصراع>
          <مصراع>بِالْمَشْرَفِيِّ وَغَابِ فَوْقَهُ حَصدّ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٦٧">وَقَالَ السُّلَيْكُ بِنُ الْسُّلَكَةُ</مقطع>
    <شاهدة رقم="٧" xml:id="٣٧-٧">
       <بيت>
          <مصراع>تَرَاهَا مِنْ يَبِيْسِ الْمَاءِ شُهْبُا</مصراع>
          <مصراع>مُخَالِطَ دِرَّةٍ مِنْهَا غِرَارٍ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="١٦٧"/>
    <مقطع رقم="٦٨">يُرِيْدُ  <حرف>عَرَقَ الْخَيْلِ</حرف>
   </مقطع>
    <مقطع رقم="٦٩">وَمِمَّا يَزِيْدُ هٰذَا الْبَابَ إِيَضَاحًا أَنَّهُ عَلَى مَعْنَى الْمُنَوَّنِ قَوْلُ الْنَّابِغَةِ</مقطع>
    <شاهدة رقم="٨" xml:id="٣٧-٨">
       <بيت>
          <مصراع>احْكُمْ كَحُكْمِ فَتَاةِ الْحَىَّ إِذْ نَظَرَتْ</مصراع>
          <مصراع>إِلَى حَمَامٍ شِرَاعٍ وَارِدِ الْثَّمَدِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٠">فَوَصَفَ بِهِ النَّكِرَةَ</مقطع>
    <مقطع رقم="٧١">وَقَالَ الْمَّرَارِ الْأَسَدِىِّ</مقطع>
    <شاهدة رقم="٩" xml:id="٣٧-٩">
       <بيت>
          <مصراع>سَلَّ الْهُمُومَ بِكُلِّ مُعْطِيَ مُعْطِىَ رَأْسِهِ</مصراع>
          <مصراع>نَاجٍ مُخَالِطِ صُهْبَةٍ مُتَعِيْسَ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٢">فَهُوَ عَلَى الْمَعْنَى لَا عَلَى الْأَصْلِ وَالْأَصْلُ التَّنْوِيْنُ</مقطع>
    <مقطع رقم="٧٣">لِأَنَّ هٰذَا الْمَوْضِعَ لَا يَقَعُ فِيْهِ مَعْرِفَةٌ</مقطع>
    <مقطع رقم="٧٤">وَلَوْ كَانَ الْأَصْلُ هٰهُنَا تَرْكَ التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٧٥">لَمَا دَخَلَهُ التَّنْوِيْنُ وَلَا كَانَ ذٰلِكَ نَكِرَةً</مقطع>
    <مقطع رقم="٧٦">وَذٰلِكَ أَنَّهُ لَا يَجْرِي مَجْرَى الْمُضَارِعِ</مقطع>
    <مقطع رقم="٧٧">فِيْمَا ذَكَرْتُ لَكِ</مقطع>
    <هارون مجلد="١" صفحة="١٦٨"/>
    <مقطع رقم="٧٨">وَزَعَمَ عِيْسَى أَنَّ بَعْضَ الْعَرَبِ يُنْشِدُ هٰذَا الْبَيْتَ لِأَبِىٓ الْأَسْوَدِ الدُّؤْلَىْ</مقطع>
    <شاهدة رقم="١٠" xml:id="٣٧-١٠">
       <بيت>
          <مصراع>فَأَلْفَيْتُهُ غَيْرَ مُسْتَعْتِبٍ</مصراع>
          <مصراع>وَلَا ذَاكِرِ الَّلَهِ إِلَا قَلِيْلا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٩">لَمْ يَحْذِفْ التَّنْوِينَ اسْتِخْفَافًا لِيُعَاقِبَ الْمَجْرُوْرَ</مقطع>
    <مقطع رقم="٨٠">وَلَكِنَّهُ حَذَفَهُ لِالْتِقَاءِ السَّاكِنَيْنِ</مقطع>
    <مقطع رقم="٨١">كَمَا قَالَ <قول>رَمَى الْقَوْمُ</قول>
   </مقطع>
    <مقطع رقم="٨٢">وَهٰذَا اضْطِرَارٌ وَهُوَ مُشَبَّهٌ بِذٰلِكَ الَّذِي ذَكَرْتُ لَكَ</مقطع>
    <مقطع رقم="٨٣">وَتَقُوْلُ في هٰذَا بَاْبِ <قول>هٰذَا ضَارِبُ زَيْدٍ وَعَمْرٍو</قول>
   </مقطع>
    <مقطع رقم="٨٤">إِذَا أَشْرَكْتَ بَيْنَ الْآخِرِ وَالْأَوَّلِ في الْجَارِّ</مقطع>
    <مقطع رقم="٨٥">لِأَنَّهُ لَيْسَ في الْعَرَبِيَّةِ شَيءٌ يَعْمَلُ في حَرْفٍ فَيَمْتَنِعُ أَنْ يُشْرَكَ بَيْنَهُ وَبَيْنَ مِثْلِهِ</مقطع>
    <مقطع رقم="٨٦">وَإِنْ شِئْتَ نَصَبْتَ عَلَى الْمَعْنَى وَتُضْمِرُ لَهُ نَاصِبًا</مقطع>
    <مقطع رقم="٨٧">فَتَقُوْلُ <قول>هٰذَا ضَارِبُ زَيْدٍ وَعَمْرًا</قول>
   </مقطع>
    <مقطع رقم="٨٨">كَأَنَّهُ قَالَ <قول>وَيَضْرِبُ عَمْرًا</قول>
