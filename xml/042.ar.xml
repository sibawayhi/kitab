<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٠٨"
     درنبورج="١-٨٨"
     هارون="١-٢١١"
     يعقوب="١-٢٧٢"
     البكاء="١-٢٨٤"
     رقم="٤٢">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ اسْتِعْمَالِ الْفِعْلِ في اللَّفْظِ لَا في الْمَعْنَى</مقطع>
    <مقطع رقم="٢">لِاتِّساعِهِمْ في الْكَلَامِ وَالْإِيجَازِ وَالِاخْتِصَارِ</مقطع>
  </عنوان>
  <مقطع رقم="٣">فَمِنْ ذٰلِكَ أَنْ تَقُوْلَ عَلَى قَوْلِ السَّائِلِ</مقطع>
  <مقطع رقم="٤">
    <قول>كَمْ صِيْدَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<حرف>كَمْ</حرف>   غَيْرُ ظَرْفٍ لِمَا ذَكَرْتُ لَكَ مِنَ الاتِّسَاعِ وَالْإِيجَازِ</مقطع>
  <مقطع رقم="٦">فَتَقُوْلُ      <قول>صِيْدَ عَلَيْهِ يَوْمَانِ</قول>
  </مقطع>
  <مقطع رقم="٧">وَإِنَّمَا الْمَعْنَى      <قول>صِيْدَ عَلَيْهِ الْوَحْشُ في يَوْمَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٨">وَلَكِنَّهُ اتَّسَعَ وَاخْتَصَرَ</مقطع>
  <مقطع رقم="٩">وَلِذٰلِكَ أَيْضًا وَضَعَ السَّائِلُ      <حرف>كَمْ</حرف>   غَيْرَ ظَرْفٍ</مقطع>
  <مقطع رقم="١٠">وَمِنْ ذٰلِكَ أَنْ تَقُوْلَ      <قول>كَمْ وُلِدَ لَهُ</قول>
  </مقطع>
  <مقطع رقم="١١">فَيَقُوْلُ      <قول>سِتُّوْنَ عَامًا</قول>
  </مقطع>
  <مقطع رقم="١٢">فَالْمَعْنَى      <قول>وُلِدَ لَهُ الْأَوْلَادُ وَوُلِدَ لَهُ الْوَلَدُ سِتِّيْنَ عَامًا</قول>
  </مقطع>
  <مقطع رقم="١٣">وَلَكِنَّهُ اتَّسَعَ وَأَوْجَزَ</مقطع>
  <مقطع رقم="١٤">وَمِنَ ذٰلِكَ أَنْ تَقُوْلَ      <قول>كَمْ سِيْرَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع رقم="١٥">وَ<حرف>كَمْ</حرف>   غَيْرُ ظَرْفٍ فَيَقُوْلُ      <قول>يُوْمُ الْجُمُعَةِ</قول>   وَ<قول>يَوْمَانِ</قول>
  </مقطع>
  <مقطع رقم="١٦">فَكَمْ هَاهُنَا بِمَنْزِلَةِ قَوْلِهِ      <قول>مَا صِيْدَ عَلَيْهِ</قول>
  </مقطع>
  <مقطع رقم="١٧">وَ<قول>مَا وُلِدَ لَهُ مِنَ الدَّهْرِ وَالْأَيَّامِ</قول>
  </مقطع>
  <مقطع رقم="١٨">فَلَيْسَ      <حرف>كَمْ</حرف>   ظَرْفًا كَمَا أَنَّ      <حرف>مَا</حرف>   لَيْسَ بِظَرْفٍ</مقطع>
  <هارون مجلد="١" صفحة="٢١١"/>
  <مقطع رقم="١٩">وَمِنْ ذٰلِكَ أَنَ يَقُوْلَ      <قول>كَمْ ضُرِبَ بِهِ</قول>
  </مقطع>
  <مقطع رقم="٢٠">فَتَقُوْلُ      <قول>ضُرِبَ بِهِ ضَرْبَتَانِ</قول>
  </مقطع>
  <مقطع رقم="٢١">وَ<قول>ضُرِبَ بِهِ ضَرْبٌ كَثِيْرٌ</قول>
  </مقطع>
  <مقطع رقم="٢٢">وَمِمَّا جَاءَ عَلَى اتِّسَاعِ الْكَلَامِ وَالِاخْتِصَارِ قَوْلُهُ تَعَالَى جَدُّهُ      <آية>وَٱسْأَلِ الْقَرْيَةَ الَّتِي كُنَّا فِيْهَا وَالْعِيْرَ الَّتِي أَقْبَلْنَا فِيْهَا</آية>
  </مقطع>
  <مقطع رقم="٢٣">إِنَّمَا يُرِيْدُ      <حرف>أَهْلَ الْقَرْيَةِ</حرف>   فَاخْتَصَرَ وَعَمِلَ الْفِعْلُ في      <حرف>الْقَرْيَةِ</حرف>
  </مقطع>
  <مقطع رقم="٢٤">كَمَا كَانَ عَامِلًا في الْـ<حرف>أَهْلِ</حرف>   لَوْ كَانَ هَاهُنَا</مقطع>
  <مقطع رقم="٢٥">وَمِثْلُهُ      <آية>بَلْ مَكْرُ اللَّيْلِ وَالنَّهَارِ</آية>   وَإِنَّمَا الْمَعْنَى      <قول>بَلْ مَكْرُكُمْ في اللَّيْلِ وَالنَّهَارِ</قول>
  </مقطع>
  <مقطع رقم="٢٦">وَقَالَ عَزَّ وَجَلَّ      <آية>وَلَكِنَّ الْبِرَّ مَنْ آمَنَ بِاللّٰهِ</آية>
  </مقطع>
  <مقطع رقم="٢٧">وَإِنَّمَا هُوَ<قول>وَلَكِنَّ الْبِرَّ بِرُّ مَنْ آمَنَ بِاللّٰهِ وَالْيَوْمِ الْآخِرِ</قول>
  </مقطع>
  <مقطع رقم="٢٨">وَمِثْلُهُ في الاتِّسَاعِ قَوْلُهُ عَزَّ وَجَلَّ      <آية>وَمَثَلُ الَّذِيْنَ كَفَرُوَا كَمَثَلِ الَّذِي يَنْعِقُ بِمَا لَايَسْمَعُ إِلَّا دُعَاءً وَنِدَاءً</آية>
  </مقطع>
  <مقطع رقم="٢٩">فَلَمْ يُشَبَّهُوا بِمَا يَنْعِقُ</مقطع>
  <مقطع رقم="٣٠">وَإِنَّمَا شُبِّهُوْا بِالمَنْعُوقِ بِهِ</مقطع>
  <مقطع رقم="٣١">وَإِنَّمَا الْمَعْنَى      <قول>مَثَلُكُمْ وَمَثَلُ الَّذِيْنَ كَفَرُوَا كَمَثَلِ النَّاعِقُ وَالمَنْعُوقَ بِهِ الَّذِىْ لَا يَسْمَعُ</قول>
  </مقطع>
  <مقطع رقم="٣٢">وَلَكِنَّهُ جَاءَ عَلَى سَعَةِ الْكَلَامِ وَالْإِيجَازِ لِعِلْمِ الْمُخَاطَبِ بِالْمَعْنَى</مقطع>
  <هارون مجلد="١" صفحة="٢١٢"/>
  <مقطع رقم="٣٣">وَمِثْلُ ذٰلِكَ مِنْ كَلَامِهِمْ      <قول>بَنُوْ فُلَانٍ يَطَؤُهُمْ الطَّرِيْقُ</قول>
  </مقطع>
  <مقطع رقم="٣٤">يُرِيْدُ      <قول>يَطَؤُهُمْ أَهْلُ الطَّرِيْقِ</قول>
  </مقطع>
  <مقطع رقم="٣٥">وَقَالُوْا      <قول>صِدْنَا قَنَوَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٣٦">وَإِنَّمَا يُرِيْدُ      <قول>صِدْنَا بِقَنَوَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٣٧">أَوْ      <قول>صِدْنَا وَحَشَ قَنَوَيْنِ</قول>
  </مقطع>
  <مقطع رقم="٣٨">وَإِنَّمَا قَنَوَانِ اسْمُ أَرْضٍ</مقطع>
  <مقطع رقم="٣٩">وَمِثْلُهُ في السَّعَةِ      <قول>أَنْتَ أَكْرَمُ عَلَيَّ مِنْ أَنْ أَضْرِبَكَ</قول>
  </مقطع>
  <مقطع رقم="٤٠">وَ<قول>أَنْتَ أَنْكَدُ مِنْ أَنْ تَتْرُكَهُ</قول>
  </مقطع>
  <مقطع رقم="٤١">إِنَّمَا تُرِيْدُ      <قول>أَنْتَ أَكْرَمُ عَلَيَّ مِنْ صَاحِبِ الضَّرْبِ</قول>
  </مقطع>
  <مقطع رقم="٤٢">وَ<قول>أَنْتَ أَنْكَدُ مِنْ صَاحِبِ تَرْكِهِ</قول>
  </مقطع>
  <مقطع رقم="٤٣">لِأَنَّ قَوْلَكَ      <قول>أَنْ أَضْرِبَكَ</قول>   وَ<قول>أَنْ تَتْرُكَهُ</قول>   هُوَ الضَّرْبُ وَالتَّرْكُ</مقطع>
  <مقطع رقم="٤٤">لِأَنَّ      <حرف>أَنْ</حرف>   اسْمٌ وَ<حرف>تَتْرُكَهُ</حرف>   وَ<حرف>أَضْرِبَكَ</حرف>   مِنْ صِلَتِهِ</مقطع>
  <مقطع رقم="٤٥">كَمَا تَقُوْلُ      <قول>يَسُوءُنِي أَنْ أَضْرِبَكَ</قول>
  </مقطع>
  <مقطع رقم="٤٦">أَيْ      <قول>يَسُوءُنِي ضَرْبُكَ</قول>
  </مقطع>
  <مقطع رقم="٤٧">وَلَيْسَ يُرِيْدُ      <قول>أَنْتَ أَكْرَمُ عَلَيَّ مِنَ الضَّرْبِ</قول>
  </مقطع>
  <مقطع رقم="٤٨">وَلَكِنْ     <قول>أَكْرَمُ عَلَيَّ مِنْ صَاحِبِ الضَّرْبِ</قول>
  </مقطع>
  <مقطع رقم="٤٩">وَقَالَ الْجَعْدِيّ</مقطع>
  <هارون مجلد="١" صفحة="٢١٣"/>
  <شاهدة رقم="١" xml:id="٤٢-١">
    <بيت>
      <مصراع>كَأَنَّ عَذِيْرَهُمْ بِجُنُوْبِ سِلَّى</مصراع>
      <مصراع>نَعَامٌ قَاقَ في بَلَدٍ قِفَارِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٠">
    <بدل>
      <هارون>الْعَذِيْرُ الصَّوْتُ</هارون>
  </بدل>وَمِنْ ذٰلِكَ قَوْلُ عَامِرِ بْنِ الْطُّفَيْلِ</مقطع>
  <شاهدة رقم="٢" xml:id="٤٢-٢">
    <بيت>
      <مصراع>فَلأَبَغِيَنَّكُمُ قَنًا وَعُوَارِضًا</مصراع>
      <مصراع>وَلَأُقْبِلَنَّ الْخَيْلَ لَابَةَ ضَرْغِدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥١">
    <بدل>
      <هارون>إِنَّمَا أُرِيْدَ      <حرف>عَذِيْرَ نَعَام</حرف>   وَقَنًا وَعُوَارِض</هارون>
      </بدل>يُرِيْدُ      <حرف>بِقَنًا</حرف>
      <بدل>
	<هارون>وَعُوَارِض</هارون>
  </بدل>وَلَكِنَّهُ حَذَفَ وَأَوْصَلَ الْفِعْلَ</مقطع>
  <مقطع رقم="٥٢">وَمِنْ ذٰلِكَ قَوْلُ سَاعِدَةَ</مقطع>
  <شاهدة رقم="٣" xml:id="٤٢-٣">
    <بيت>
      <مصراع>لَدْنٌ بِهَزِّ الكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
      <مصراع>فِيْهِ كَمَا عَسَلَ الطَّرِيْقَ الثَّعْلَبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٣">يُرِيْدُ      <حرف>فِي الطَّرِيْقِ</حرف>
  </مقطع>
  <مقطع رقم="٥٤">وَمِنْ ذٰلِكَ قَوْلُهُمْ      <قول>أَكَلْتُ أَرْضَ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع رقم="٥٥">وَ<قول>أَكَلْتُ بَلْدَةَ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع رقم="٥٦">إِنَّمَا   <بدل>
  <هارون>أَرَادَ أَصَابَ مِنْ خَيْرِهَا وَ</هارون>
  <يعقوب>يُريدُ أَنَّهُ</يعقوب>
  </بدل>أَكَلَ مِنْ ذٰلِكَ وَشَرِبَ   <بدل>
  <يعقوب>وَأَصَابَ مِنْ خَيْرِهَا</يعقوب>
</بدل>
  </مقطع>
  <مقطع رقم="٥٧">وَهٰذَا الْكَلَامُ كَثِيْرٌ مِنْهُ   <هارون مجلد="١" صفحة="٢١٤"/>مَا مَضَىْ وَهُوَ أَكْثَرُ مِنْ أُحْصِيَهْ</مقطع>
  <مقطع رقم="٥٨">وَمِنْهُ مَا سَتَرَاهُ أَيْضا فِيْمَا يُسْتَقْبَلُ إِنِ شَاءَ اللّٰهُ</مقطع>
  <مقطع رقم="٥٩">وَ هٰذا أَنْثَرُ مِنْ أَنْ يُحْصَى</مقطع>
  <مقطع رقم="٦٠">وَمِنْهُ قَوْلُهُمْ      <قول>هَذِهِ الظُّهْرُ أَوِ الْعَصْرُ أَوِ الْمَغْرِبُ</قول>
  </مقطع>
  <مقطع رقم="٦١">إِنَّمَا يُرِيْدُ      <قول>صَلَاةَ هٰذَا الْوَقْتِ</قول>
  </مقطع>
  <مقطع رقم="٦٢">وَ<قول>اجْتَمَعَ الْقَيْظُ</قول>
  </مقطع>
  <مقطع رقم="٦٣">يُرِيْدُ      <قول>اجْتَمَعَ النَّاسُ في الْقَيْظِ</قول>
  </مقطع>
  <مقطع رقم="٦٤">وَقَالَ الْحُطَيْئَةُ</مقطع>
  <شاهدة رقم="٤" xml:id="٤٢-٤">
    <بيت>
      <مصراع>وَشَرُّ الْمَنَايَا مَيَّتٌ بَيْنَ أَهْلِهِ</مصراع>
      <مصراع>كَهُلْكِ الْفَتَى قَدْ أَسْلَمَ الْحَىَّ حَاضِرُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٥">يُرِيْدُ مَنِيَّةُ مَيَّتٍ</مقطع>
  <مقطع رقم="٦٦">وَقَالَ النَّابِغَةُ الْجَعْدِيّ</مقطع>
  <شاهدة رقم="٥" xml:id="٤٢-٥">
    <بيت>
      <مصراع>وَكَيْفَ تُوَاصِلُ مَنْ أَصْبَحَتْ</مصراع>
      <مصراع>خِلَالَتُهُ كَأَبِي مَرْحَبِ</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٢١٥"/>
  <مقطع رقم="٦٧">يُرِيْدُ      <قول>كَخِلَالَةِ أَبِي مَرْحَبٍ</قول>
  </مقطع>
</باب>
