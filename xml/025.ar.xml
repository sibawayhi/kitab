<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="٢٥">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَابُ مَا يَجْرِي مِمَّا يَكُوْنُ ظَرْفًا هٰذَا الْمَجْرَى</مقطع>
       <مختصر>هٰذَا بَابُ مَا يَجْرِي مِمَّا يَكُوْنُ ظَرْفًا هٰذَا الْمَجْرَى</مختصر>
   </عنوان>
    <مقطع رقم="٢">وَذٰلِكَ قَوْلُكَ <قول>يَوْمُ الْجُمْعَةِ أَلْقَاكَ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٣">وَ<قول>أَقَلُّ يَوْمٍ لَا أَلْقَاكَ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٤">وَ<قول>أَقَلُّ يَوْمٍ لَا أَصُوْمُ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٥">وَ<قول>خَطِيْئَةُ يَوْمٍ لَا أَصِيْدُ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٦">وَ<قول>مَكَانُكُمْ قُمْتُ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٧">فَصَارَتْ هٰذِهِ الْأَحْرُفُ تَرْتَفِعُ بِالِابْتِدَاءِ</مقطع>
    <مقطع رقم="٨">كَارْتِفَاعِ  <حرف>عَبْدِ اللّٰهِ</حرف>
   </مقطع>
    <مقطع رقم="٩">وَصَارَ مَا بَعْدَهَا مَبْنِيًّا عَلَيْهَا</مقطع>
    <مقطع رقم="١٠">كَبِنَاءِ الْفِعْلِ عَلَى الاسْمِ الْأَوَّلِ</مقطع>
    <مقطع رقم="١١">فَكَأَنَّكَ قُلْتَ <قول>يَوْمُ الْجُمْعَةِ مُبَارَكٌ</قول>
   </مقطع>
    <مقطع رقم="١٢">وَ<قول>مَكَانُكُمْ حَسَنٌ</قول>
   </مقطع>
    <مقطع رقم="١٣">وَصَارَ الْفِعْلُ في مَوْضِعِ هٰذَا</مقطع>
    <مقطع رقم="١٤">وَإِنَّمَا صَارَ هٰذَا كَهٰذَا حِيْنَ صَارَ في الْآخِرِ إِضْمَارُ الْيَوْمِ وَالْمَكَانِ</مقطع>
    <مقطع رقم="١٥">فَخَرَجَ مِنْ أَنْ يَكُوْنَ ظَرْفًا</مقطع>
    <مقطع رقم="١٦">كَمَا يَخُرُجُ إِذَا قُلْتَ <قول>يُوْمُ الْجُمْعَةِ مُبَارَكٌ</قول>
   </مقطع>
    <مقطع رقم="١٧">فَإِذَا قُلْتَ <قول>يُوْمُ الْجُمْعَةِ صُمْتُهُ</قول>
   </مقطع>
    <مقطع رقم="١٨">فَـ<حرف>صُمْتُهُ</حرف>  في مَوْضِعِ  <حرف>مُبَارَكٍ</حرف>
   </مقطع>
    <مقطع رقم="١٩">حَيْثُ كَانَ الْمُضْمَرُ هُوَ الْأَوَّلُ</مقطع>
    <مقطع رقم="٢٠">كَمَا كَانَ الْمُبَارَكُ هُوَ الْأَوَّلَ</مقطع>
    <هارون مجلد="١" صفحة="٨٤"/>
    <مقطع رقم="٢١">وَيَدْخُلُ النَّصْبُ فِيْهِ كَمَا دَخَلَ في الْاسْمِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٢٢">وَيَجُوْزُ في ذٰلِكَ <قول>يَوْمَ الْجُمْعَةِ آتِيْكَ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٢٣">وَ<قول>أَصُوْمُ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٢٤">كَمَا جَازَ في قَوْلِكَ <قول>عَبْدَ اللّٰهِ مَرَرْتُ بِهِ</قول>
   </مقطع>
    <مقطع رقم="٢٥">كَأَنَّهُ قَالَ <قول>أَلْقَاكَ يَوْمَ الْجُمْعَةِ</قول>
   </مقطع>
    <مقطع رقم="٢٦">فَنَصَبَهُ لِأَنَّهُ ظَرْفٌ</مقطع>
    <مقطع رقم="٢٧">ثُمَّ فَسَّرَ فَقَالَ <قول>أَلْقَاكَ فِيْهَ</قول>
   </مقطع>
    <مقطع رقم="٢٨">وَإِنْ شَاءَ نَصَبَهُ عَلَى الْفِعْلِ نَفْسِهِ</مقطع>
    <مقطع رقم="٢٩">كَمَا أَعْمَلَ فِيْهِ الْفِعْلَ الَّذِي لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
    <مقطع رقم="٣٠">كُلُّ ذٰلِكَ عَرَّبِيٌّ جَيِّدٌ</مقطع>
    <مقطع رقم="٣١">أَوْ نَصَبَهَ لِأَنَّهُ ظَرْفٌ لِفِعْلٍ أَضْمَرَهُ</مقطع>
    <مقطع رقم="٣٢">وَكَأَنَّهُ قَالَ <قول>يَوْمَ الْجُمْعَةِ أَلْقَاكَ</قول>
   </مقطع>
    <مقطع رقم="٣٣">وَالنَّصْبُ في <قول>يَوْمَ الْجُمْعَةِ صُمْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٣٤">وَ<قول>يَوْمَ الْجُمْعَةِ سِرْتُه</قول>
   </مقطع>
    <مقطع رقم="٣٥">مِثْلُهُ في قَوْلِكَ <قول>عَبْدَ اللّٰهِ ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٣٦">إِلَّا أَنَّهُ إِنْ شَاءَ نَصَبَهَ بِأَنَّهُ ظَرْفٌ</مقطع>
    <مقطع رقم="٣٧">وَإِنْ شَاءَ أَعَمَلَ فِيْهِ الْفِعْلَ</مقطع>
    <مقطع رقم="٣٨">كَمَا أَعْمَلَهُ في  <حرف>عَبْدِ اللّٰهِ</حرف>
   </مقطع>
    <مقطع رقم="٣٩">لِأَنَّهُ يَكُوْنُ ظَرْفًا وَغَيْرَ ظَرْفٍ</مقطع>
    <رأس هو="٠">عَلامَةُ إِضْمَارِ الاسمِ الأَوَّلِ</رأس>
    <مقطع رقم="٤٠">وَلَا يَحْسُنُ في الْكَلَامِ</مقطع>
    <مقطع رقم="٤١">أَنْ يَجْعَلَ الْفِعْلَ مَبْنِيًّا عَلَى الِاسْمِ</مقطع>
    <مقطع رقم="٤٢">وَلَا يَذْكُرَ عَلَامَةَ إِضْمَارِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٤٣">حَتَّى يَخْرُجَ مِنْ لَفْظِ الْإِعْمَالِ في الْأَوَّلِ</مقطع>
    <مقطع رقم="٤٤">وَمِنْ حَالِ بِنَاءِ الْاسْمِ عَلَيْهِ</مقطع>
    <مقطع رقم="٤٥">ويَشْغَلَهُ بِغَيْرِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٤٦">حَتَّى يَمْتَنِعَ مِنْ أَنْ يَكُوْنَ يَعْمَلُ فِيْهِ</مقطع>
    <مقطع رقم="٤٧">وَلَكِنَّهُ قَدْ يَجُوْزُ في الشِّعْرِ</مقطع>
    <مقطع رقم="٤٨">وَهُوَ ضَعِيْفٌ في الْكَلَامِ</مقطع>
    <مقطع رقم="٤٩">قَالَ الشَّاعِرُ وَهُوَ أَبُوْ النَّجْمِ الْعِجْلِيُّ</مقطع>
    <شاهدة رقم="١" xml:id="٢٥-١">
       <بيت>
          <مصراع>قَدْ أَصْبَحَتْ أُمُّ الْخِيَارِ تَدَّعِي</مصراع>
          <مصراع>عَلَيَّ <شهدة>ذَنْبًا كُلُّهُ لَمْ أَصْنَعِ</شهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٥٠">فَهٰذَا ضَعِيْفٌ وَهُوَ بِمَنْزِلَتِهِ في غَيْرِ الشِّعْرِ</مقطع>
    <مقطع رقم="٥١">لِأَنَّ النَّصْبَ لَا يَكْسِرُ الْبَيْتَ</مقطع>
    <مقطع رقم="٥٢">وَلَا يُخِلُّ بِهِ تَرْكُ إِظْهَارِ الْهَاءِ</مقطع>
    <مقطع رقم="٥٣">وَكَأَنَّهُ قَالَ <قول>كُلُّهُ غَيْرُ مَصْنُوعٍ</قول>
   </مقطع>
    <مقطع رقم="٥٤">وَقَالَ امْرُؤُ الْقَيْسِ</مقطع>
    <هارون مجلد="١" صفحة="٨٥"/>
    <شاهدة رقم="٢" xml:id="٢٥-٢">
       <بيت>
          <مصراع>فَأَقْبَلْتُ زَحْفًا عَلَى الرُّكْبَتَيْنِ</مصراع>
          <مصراع>
             <شهدة>فَثَوْبٌ لَبِسْتُ</شهدة> وَ<شهدة>ثَوْبٌ أَجَرّ</شهدة>
         </مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٥٥">وَقَالَ النَّمِرُ بْنُ تَوْلَبٍ</مقطع>
    <مقطع رقم="٥٦">وَسَمِعْنَاه مِنَ الْعَرَبِ يُنْشِدُوْنَهُ</مقطع>
    <شاهدة رقم="٣" xml:id="٢٥-٣">
       <بيت>
          <مصراع>فَيَوْمٌ عَلَيْنَا وَيَوْمٌ لَنَا</مصراع>
          <مصراع>وَ<شهدة>يَوْمٌ نُسَاءُ</شهدة> وَ<شهدة>يَوْمٌ نُسَرّ</شهدة>
         </مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٥٧">يُرِيْدُوْنَ  <حرف>نُسَاءُ فِيْهِ وَنُسَرُّ فِيْهِ</حرف>
   </مقطع>
    <مقطع رقم="٥٨">وَزَعَمُوْا أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <قول>شَهْرٌ ثَرَى وَشَهْرٌ تَرَى وَشَهْرٌ مَرْعَى</قول>
   </مقطع>
    <مقطع رقم="٥٩">يُرِيْدُ <قول>تَرَى فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٦٠">وَقَالَ</مقطع>
    <شاهدة رقم="٤" xml:id="٢٥-٤">
       <بيت>
          <مصراع><شهدة>ثَلَاثٌ كُلُّهُنَّ قَتَلْتُ</شهدة> عَمْدًا</مصراع>
          <مصراع>فَأَخْزَى اللّٰهُ رَابِعَةً تَعُوْدُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٦١">فَهٰذَا ضَعِيْفٌ وَالْوَجْهُ الْأَكْثَرُ الْأَعْرَفُ النَّصْبُ</مقطع>
    <مقطع رقم="٦٢">وَإِنَّمَا شَبَّهُوْهُ بِقَوْلِهِمْ <هارون مجلد="١" صفحة="٨٦"/>
       <قول>الَّذِي رَأَيْتُ فُلَانٌ</قول>
   </مقطع>
    <مقطع رقم="٦٣">حَيْثُ لَمْ يَذْكُرُوْا الْهَاءِ</مقطع>
    <مقطع رقم="٦٤">وَهُوَ في هٰذَا أَحْسَنُ لِأَنَّ  <حرف>رَأَيْتُ</حرف>  تَمَامُ الِاسْمِ</مقطع>
    <مقطع رقم="٦٥">بِهِ يَتِمُّ</مقطع>
    <مقطع رقم="٦٦">وَلَيْسَ بِخَبَرٍ وَلَا صِفَةٍ</مقطع>
    <مقطع رقم="٦٧">فَكَرِهُوا طُوْلَهُ حَيْثُ كَانَ بِمَنْزِلَةِ اسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="٦٨">كَمَا كَرِهُوْا طُوْلَ  <حرف>اشْهِيْبَابٍ</حرف>  فَقَالُوَا  <حرف>اشْهِبَابٍ</حرف>
   </مقطع>
    <مقطع رقم="٦٩">وَهُوَ في الْوَصْفِ أَمْثَلُ مِنْهُ في الْخَبَرِ</مقطع>
    <مقطع رقم="٧٠">وَهُوَ عَلَى ذٰلِكَ ضَعِيْفٌ</مقطع>
    <مقطع رقم="٧١">لَيْسَ كَحُسْنِهِ بِالْهَاءِ</مقطع>
    <مقطع رقم="٧٢">لِأَنَّهُ فِي مَوْضِعِ مَا هُوَ مِنْ الِاسْمِ وَمَا يَجْرِي عَلَيْهِ</مقطع>
    <مقطع رقم="٧٣">وَلَيْسَ بِمُنْقَطِعٍ مِنْهُ خَبَرًا مَبْنِيًّا عَلَيْهِ وَلَا مُبْتَدَأً</مقطع>
    <مقطع رقم="٧٤">فَضَارَعَ مَا يَكُوْنُ مِنْ تَمَامِ الْاسْمِ وَإِنْ لَمْ يَكُنْ تَمَامًا لَهُ وَلَا مِنْهُ في الْبِنَاءِ</مقطع>
    <مقطع رقم="٧٥">وَذٰلِكَ قَوْلُكَ <قول>هٰذَا رَجُلٌ ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٧٦">وَ<قول>النَّاسُ رَجُلَانِ رَجُلٌ أَكْرَمْتُهُ وَرَجُلٌ أَهَنْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٧٧">كَأَنَّهُ قَالَ <قول>هٰذَا رَجُلٌ مَضْرُوْبٌ</قول>
   </مقطع>
    <مقطع رقم="٧٨">وَ<قول>النَّاسُ رَجُلَانِ رَجُلٌ مُكْرَمٌ وَرَجُلٌ مْهَانٌ</قول>
   </مقطع>
    <مقطع رقم="٧٩">فَإِنْ حَذَفْتَ الْهَاءَ جَازَ وَكَانَ أَقْوَى مِمَّا يَكُوْنُ خَبَرًا</مقطع>
    <مقطع رقم="٨٠">وَمِمَّا جَاءَ في الشِّعْرِ مِنْ ذٰلِكَ قَوْلُ جَرِيْرٍ</مقطع>
    <شاهدة رقم="٥" xml:id="٢٥-٥">
       <بيت>
          <مصراع>أَبَحْتَ حَمَى تِهَامَةَ بَعْدَ نَجْدٍ</مصراع>
          <مصراع>وَمَا شَيْءٌ حَمَيْتَ بِمُسْتَبَاحِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٨٧"/>
    <مقطع رقم="٨١">يُرِيْدُ الْهَاءِ</مقطع>
    <مقطع رقم="٨٢">وَقَالَ الشَّاعِرُ الْحَارِثِ بْنِ كَلَدَةَ</مقطع>
    <شاهدة رقم="٦" xml:id="٢٥-٦">
       <بيت>
          <مصراع>فَمَا أَدْرِي أَغَيَّرَهُمْ تَنَاءٍ</مصراع>
          <مصراع>وَطُوْلُ الْعَهْدِ أَمْ مَالٌ أَصَابُوا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٨٣">يُرِيْدُ <قول>أَصَابُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٨٤">وَلَا سَبِيِلَ إِلَى النَّصْبِ وَإِنْ تَرَكْتَ الْهَاءَ لِأَنَّهُ وَصْفٌ</مقطع>
    <مقطع رقم="٨٥">كَمَا لَمْ يَكُنْ النَّصْبُ فِيْمَا أَتْمَمْتَ بِهِ الْاسْمَ يَعْنِىَ الصَّلَةَ</مقطع>
    <مقطع رقم="٨٦">فَمِنْ ثَمَّ كَانَ أَقْوَى مِمَّا يَكُوْنُ في مَوْضِعِ الْمَبْنِيِّ عَلَى الْمُبْتَدَإِ لِأَنَّهُ</مقطع>
    <مقطع رقم="٨٧">لَا يُنْصَبُ بِهِ</مقطع>
    <مقطع رقم="٨٨">وَإِنَّمَا مَنَعَهُمْ أَنْ يَنْصِبُوْا بِالْفِعْلِ الِاسْمَ إِذَا كَانَ صِفَةً لَهُ</مقطع>
    <مقطع رقم="٨٩">أَنَّ الصِّفَةَ تَمَامُ الْاسْمِ</مقطع>
    <مقطع رقم="٩٠">أَلَا تَرَى أَنَّ قَوْلَكَ <قول>مَرَرْتُ بِزَيْدٍ الْأَحْمَرِ</قول>
   </مقطع>
    <مقطع رقم="٩١">كَقَوْلِكَ <قول>مَرَرْتُ بِزَيْدٍ</قول>
   </مقطع>
    <مقطع رقم="٩٢">وَذٰلِكَ أَنَّكَ لَوْ احْتَجْتَ إِلَى أَنْ تَنْعَتَ فَقُلْتَ <قول>مَرَرْتُ بِزَيْدٍ</قول>
   </مقطع>
    <مقطع رقم="٩٣">وَأَنْتَ تُرِيْدُ الْأَحْمَرَ وَهُوَ لَا يُعْرَفُ حَتَّى تَقُوْلَ  <حرف>الْأَحْمَرِ</حرف>
   </مقطع>
    <مقطع رقم="٩٤">لَمْ يَكُنْ تَمَّ الْاسْمُ</مقطع>
    <مقطع رقم="٩٥">فَهُوَ يَجْرِي مَنْعُوْتًا مَجْرَى <قول>مَرَرْتُ بِزَيْدٍ</قول>
   </مقطع>
    <مقطع رقم="٩٦">إِذَا كَانَ يُعْرَفُ وَحْدَهُ</مقطع>
    <مقطع رقم="٩٧">فَصَارَ  <حرف>الْأَحْمَرِ</حرف>  كَأَنَّهُ مِنْ صِلَتِهِ</مقطع>
</باب>
