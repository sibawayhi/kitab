<باب رقم="٥١٢"
     
     xmlns="http://www.sibawayhi.org/schema/2017/10/kitab">

  <يعقوب مجلد="٤" صفحة="٣٦٧"/>
  <هارون مجلد="٤" صفحة="٢٤٥"/>
  
  <عنوان>
    <مقطع>هَذَا بَابُ مَا لَحَقَتْهُ الزَّوَائِدُ مِنْ بَنَاتِ الثَّلَاثَةِ مِنْ غَيْرِ الْفِعْلِ</مقطع>
  </عنوان>
  
  <قسم يعقوب="٤.٣٦٧" هارون="٤.٢٤٥">
    <عنوان>لِحاقُ الْهَمْزَة</عنوان>

    <مقطع>
      فَالْهَمْزَةُ تَلْحَقُ أَوَّلًا فَيَكُونُ الْحَرْفُ عَلَى <مثال>أَفْعَلٍ</مثال> وَيَكُونُ لِلِاسْمِ وَالصِّفَةِ
    </مقطع>
    <مقطع>فَالِاسْمُ نَحْوُ <اسم>أَفْكَلٍ</اسم> و<اسم>أَيْدَعٍ</اسم> و<اسم>أَجْدَلٍ</اسم>
    وَالصِّفَةُ نَحْوُ <صفة>أَبْيَضَ</صفة> وَ<صفة>أَسْوَدَ</صفة> وَ<صفة>أَحْمَرَ</صفة>
    </مقطع>
    
    <مقطع>
      وَيَكُونُ عَلَى <مثال>إِفْعِلٍ</مثال> نَحْوُ <اسم>إِثْمِدٍ</اسم> وَ<اسم>إِصْبِعٍ</اسم>
      و<اسم>إِجْرِدٍ</اسم> وَلَا نَعْلَمُهُ جَاءَ صَفَةً
    </مقطع>

    <مقطع>
      وَيَكُونُ عَلَى <مثال>إِفْعَلٍ</مثال> نَحْوُ <اسم>إِصْبَعٍ</اسم> و<اسم>إِبْرَمَ</اسم>
      و<اسم>إِبْيَنَ</اسم> و<اسم>إِشْفًى</اسم> وَ<اسم>إِنْفَحَةُ</اسم> وَلَا نَعْمَلُهُ
      جَاءَ صَفَةً
    </مقطع>

    <مقطع>
    وَيَكُونُ عَلَى <مثال>أَفْعِلٍ</مثال> وَهُوَ قَلِيلٌ نَحوُ <اسم>أَصْبِعٍ</اسم> وَلَا نَعْلَمُهُ جَاءَ صِفَةً</مقطع>

    <مقطع>وَيَكُونُ <مثال>أُفْعُلًا</مثال> وَهُوَ قَلِيلٌ نَحوُ <اسم>أُبْلُم</اسم> وَ<اسم>أُصْبُعٍ</اسم> وَلَا نَعْلَمُهُ جَاءَ صِفَةً</مقطع>

    <مقطع>
      وَلَا يَكُونُ فِي الْأَسْمَاءِ وَالصِّفَاتِ <مثال>أَفْعُلٌ</مثال> إِلَّا أَنْ يُكَسَّرَ عَلَيْهِ الْاِسْمُ لِلْجَمْعِ نَحْوُ
      <يعقوب مجلد="٤" صفحة="٣٦٨"/>
      <اسم>أَكْلُبٍ</اسم> و<اسم>أَعْبُدٍ</اسم> وَلَيْسَ فِي شَيْءٍ مِنَ الْأَسْمَاءِ وَالصِّفَاتِ أُفْعَلٌ وَلَيْسَ فِي الْكَلَاَمِ إِفْعُل
    </مقطع>

    <مقطع>
      وَيَكُونُ عَلَى <مثال>إِفْعَالٍ</مثال> فِي الِاسْمِ وَالصِّفَةِ فَالِاسْمُ نَحْوُ <اسم>الْإِعْطَاْءِ</اسم> وَ<اسم>الْإِسْلَاْمِ</اسم>
      وَ<اسم>الْإِعْصَاْرِ</اسم> و<اسم>إِسْنَاْمٍ</اسم> وَهُوَ شَجَرٌ وَ<اسم>الْإِمْخَاْضِ</اسم> وَأَمَّا الصِّفَةُ فَنَحْوُ <صفة>الْإِسْكَافِ</صفة> وَهُوَ فِي
      الصِّفَّةِ قَلِيلٌ وَلَا نَعْلَمُهُ جَاءَ غَيْرَ هَذَا
    </مقطع>

    <مقطع>
      وَيَكُوْنُ عَلَى <مثال>أَفْعَاْلٍ</مثال> نَحْوُ <اسم>الْأَسْحَاْرِ</اسم> وَلاَ نَعْلَمُهُ جَاءَ اسْمًا وَلاَ صِفَةً غَيْرَ هَذَا
    </مقطع>

    <مقطع>
      وَيَكُونُ عَلَى <مثال>إِفْعِيْلٍ</مثال> فِي الِاسْمِ وَالصِّفَةِ فَالْأَسْمَاءُ نَحْوُ
      <اسم>إِخْرِيْطٍ</اسم> و<اسم>إِسْلِيْحٍ</اسم> وَ<اسم>إِكْلِيلٍ</اسم> وَالصِّفَةُ نَحْوُ
      <صفة>إِصْلِيْتٍ</صفة> وَ<صفة>إِجْفِيْلٍ</صفة> وَ<صفة>إِخْلِيْجٍ</صفة> وَ<صفة>الْإِخْلِيْجُ</صفة> النَّاقَةُ الْمُخْتَلَجَةُ مِنْ أُمِّهَا
    </مقطع>
    
    <مقطع>
      وَيَكُونُ عَلَى <مثال>أُفْعُوْلٍ</مثال> فِيهِمَا فَالْأَسْمَاءُ نَحْوُ <اسم>أُسْلُوْبٍ</اسم>
      وَ<اسم>الْأُخْدُوْدِ</اسم> <هارون مجلد="٤" صفحة="٢٤٥"/>
      وَ<اسم>أُرْكُوْبٍ</اسم> وَالصِّفَةُ نَحْوُ <صفة>أُمْلُوْدٍ</صفة> وَ<صفة>أُسْكُوْبٍ</صفة>
      و<صفة>أُثْعُوْبٍ</صفة>
    </مقطع>

    <مقطع>
      وَقَالَ الشَّاعِرُ
      <شاهدة>
        <بيت>
          <مصراع>إنّي أرقتُ على المِطْلَى وأشْأزَني</مصراع>
          <مصراع>بَرْقٌ يُضيءُ أَمامَ البيتِ أُسكُوبُ</مصراع>
        </بيت>
      </شاهدة>
    </مقطع>

    <مقطع>وَ<صفة>أُفْنُوْنٍ</صفة></مقطع>
    <يعقوب مجلد="٤" صفحة="٣٦٩"/>
    
    <مقطع>
      وَيَكُونُ عَلَى <مثال>أُفَاعِلٍ</مثال> فِيهِمَا فَالْأَسْمَاءُ نَحْوُ <اسم>أُدَاْبِرَ</اسم> وَ<اسم>أُجَاْرِدَ</اسم> وَ<اسم>أُحَاْمِرَ</اسم> وَهُوَ فِي
      الصِّفَةِ قَلِيلٌ قَالُوا <قول>رَجُلٌ <صفة>أُبَاتِرٌ</صفة></قول> وَهُوَ الْقَاطِعُ لِرَحِمِهِ وَلَا نَعْلَمُهُ جَاءَ وَصْفًا
      إِلَّا هَذَا
    </مقطع>

    <مقطع>
      وَيَكُونُ عَلَى <مثال>إِفْعَوْلٍ</مثال> فِيهِمَا فَالْأَسْمَاءُ
      قَالُوا<قول><اسم>الإِدْرَوْنُ</اسم></قول> يُرِيدُونَ الدَّرَنَ وَأَمَّا مَا جَاءَ صَفَّةً
      <صفة>فالْإِسْحَوْفُ</صفة> قَالُوا <قول>إِنَّهَا لَإِسْحَوْفُ الْأحَالِيلَ</قول>
      و<صفة>الْإِزْمَوْلُ</صفة> وَإِنَّمَا يُرِيدُونَ الَّذِي يَزْمِلُ
    </مقطع>

    <مقطع>
      قَالُ الشَّاعِرِ وَهُوَ <شاعر>اِبْنُ مُقْبِلٍ</شاعر> يَصُفُّ وَعِلَا
      <شاهدة>
        <بيت>
          <مصراع>عَوْداً أَحَمَّ القَرَا إِزْمَوْلَةً وَقِلاً</مصراع>
          <مصراع>يأْتِي تُراثَ أَبيه يَتْبَعُ القُذُف</مصراع>
        </بيت>
      </شاهدة>
    </مقطع>

    <هارون مجلد="٤" صفحة="٢٤٦"/>
    <يعقوب مجلد="٤"  صفحة="٣٧٠"/>

    <مقطع>
      وَإِنَّمَا لُحِقَتِ الْهَاءُ كَمَا تَقُولُ <قول>نَسَّابَةٌ</قول> لِلْنَسَّابِ
    </مقطع>
    
    <مقطع>
      <مبدأ><مادة>هاء التأنيث</مادة>وَلَيْسَتِ الْهَاءُ مِنَ الْبِنَاءِ فِي شَيْءٍ إِنَّمَا تُلْحَقُ بَعْدَ الْبِنَاءِ وَقَدْ بَيَّنَا
      ذَلِكَ فِيمَا مَضَى</مبدأ>
    </مقطع>

    <مقطع>
      وَلَيْسَ فِي الْكَلَاَمِ <مثال>أُفْعِيْل</مثال> وَلَا <مثال>أَفْعَوْل</مثال> وَلَا
      <مثال>أُفْعَال</مثال> وَلَا <مثال>أَفْعِيْل</مثال> وَلا <مثال>أَفْعَال</مثال>
    إِلَّا أَنْ تُكَسِّرَ عَلَيْهِ اِسْمًا لِلْجَمْعِ</مقطع>
    <مقطع>
      وَلَا <مثال>أَفَاعِلُ</مثال> وَلَا <مثال>أَفَاعِيلُ</مثال> إِلَّا لِلْجَمْعِ نَحْوَ
      <اسم>أَجَادِلَ</اسم> و<اسم>أَقَاطِيْعَ</اسم>
    </مقطع>

    <مقطع>
      وَيَكُونُ عَلَى <مثال>أَفَنْعَلٍ</مثال> فِي الِاسْمِ وَالصِّفَةِ وَهُوَ قَلِيلٌ.
    </مقطع>
    <مقطع>فَالِاسْمُ نَحْوُ <اسم>أَلَنْجَجٍ</اسم> و<اسم>أَبَنْبَمٍ</اسم></مقطع>
    <مقطع>وَالصِّفَةُ نَحْوُ <صفة>أَلَنْدَدٍ</صفة> وَهُوَ مِنَ <اسم>اللَّدَدِ</اسم>.
    </مقطع>
    <مقطع>
      وَقَالِ الشَّاعِرِ <شاعر>الطّرِمّاحُ</شاعر>
      <شاهدة>
        <بيت>
          <مصراع>خَصْمٌ أبَرَّ عَلَى الخُصوم <صفة>أَلَنْدَدُ</صفة></مصراع>
        </بيت>
      </شاهدة>
    </مقطع>
    <مقطع>
      وَهَذَا فِي الِاسْمِ وَالصِّفَةِ قَلِيلٌ وَلَا نَعْلَمُ إِلَّا هَذَيْنِ
    </مقطع>

    <مقطع>
      وَيَكُونُ عَلَى <مثال>إِفْعِيْلَى</مثال> نَحْوُ <اسم>إِهْجِيْرَى</اسم>
      و<اسم>إِجْرِيَّا</اسم> وَهُمَا اِسْمَانِ وَلَا نَعْلَمُ غَيْرَهُمَا
    </مقطع>

    <مقطع>ويكون على <مثال>أَفْعَلَى</مثال> وهو قليلٌ ولا نعلم إلا
    <اسم>أَجْفَلَى</اسم>.</مقطع>

    <يعقوب مجلد="٤"  صفحة="٣٧١"/>

    <مقطع>ويكون على <مثال>أُفْعُلَّةٍ</مثال> وهو قليلٌ</مقطع>
    <مقطع>نحوُ <اسم>أُسْكُفَّةٍ</اسم> و<اسم>أُتْرُجٍّ</اسم> و<اسم>أُسْطُمَّةٍ</اسم> وهي
    أسماءٌ</مقطع>
    
    <مقطع>ويكون على إفعلٌ فيهما قالوا إرزبٌ وإزفلةٌ وهو اسم وإرزبٌ صفة</مقطع>
    <مقطع>ويكون على إفعلي قالوا إيجلي وهو اسم</مقطع>
    <مقطع>ويكون على إنفعلٍ وقالوا إنقحلٌ في الوصف لا غير</مقطع>
    <مقطع>ويكون على أفعلان في الاسم والصفة فالاسم أفعوانٌ والأرجوان والأقحوان والصفة نحو الأسحلان والألعبان<هارون مجلد="٤" صفحة="٢٤٧"/>ويكون على إفعلانٍ في الاسم والصفة وهو قليل فما جاء في الاسم فنحو الإسحمان جبل بعينه والإمدان وأما الصفة فقولهم ليلةٌ إضحيانة وهو قليل لا نعلم إلا هذا</مقطع>
    <مقطع>ويكون على أفعلانٍ وهو قليل لا نعلمه جاء إلا أنبجانٌ وهو صفةٍ يقال عجينٌ أنبجانٌ وأرونانٌ وهو وصف قال النابغة الجعدي</مقطع>
    <شاهدة>
      <بيت>
        <مصراع>فَظَلَّ لِنِسْوةِ النُّعمْانِ منا</مصراع>
        <مصراع>عَلَى سَفَوانَ يومٌ أرْوَنَانُ</مصراع>
      </بيت>
    </شاهدة>
    <يعقوب مجلد="٤"  صفحة="٣٧٢"/>
    <مقطع>ويكون على إفعلاء ولا نعلمه جاء إلا في الإربعاء وهو اسم</مقطع>
    <مقطع>وكذلك أفعلاء ولا نعلمه جاء إلا في الأربعاء</مقطع>
    <مقطع>وأما الأفعلاء مكسراً عليه الواحد للجمع فكثيرٌ نحو أنصباء وأصدقاء وأصفياء ولا نعلم في الكلام إفعلان ولا أفعلان ولا شيئاً من هذا النحو لم نذكره</مقطع>
    <مقطع>وتلحق الهمزة غير أول وذلك قليل فيكون الحرف على فعلى وذلك نحو ضهيا صفة وضهيا اسم وعلى فعائل نحو حطائطٍ وجرائضٍ وفعال وفأعل قالوا شمأل وشأمل وهو اسم
    </مقطع>
  </قسم>
  
  <هارون مجلد="٤" صفحة="٢٤٨"/>

  <قسم يعقوب="٤.٣٧٢" هارون="٤.٢٤٩">
    <عنوان>لِحاقُ الْأَلِفِ</عنوان>
    
    <مقطع>وَأَمَّا الأَلِفُ فَتُلْحَقُ ثانِيَةً</مقطع>
    <مقطع>
      وَيَكُونُ الْحَرْفُ عَلَى <مثال>فَاعِلٍ</مثال> فِي الِاسْمِ وَالصِّفَةِ
    </مقطع>
    <مقطع>فَالْأَسْمَاءُ نَحْوُ <حرف>كَاهِلٍ</حرف> وَ<حرف>غَارِبٍ</حرف>
    وَ<حرف>سَاعِدٍ</حرف></مقطع>
    <مقطع>
      وَالصِّفَةُ نَحْوُ <مثال>ضَارِبٍ</مثال>
      وَ<مثال>قَاتِلٍ</مثال>
      وَ<مثال>جَالِسٍ</مثال>
    </مقطع>
    <مقطع>
      وَيَكُونُ <مثال>فَاعَلًا</مثال> نَحوَ <حرف>طَابَقٍ</حرف> وَ<حرف>خَاتَمٍ</حرف>
    </مقطع>
    <مقطع>وَلَا نَعْلَمُهُ جَاءَ صَفَةً وَلَيْسَ فِي كَلَاَمِ الْعَرَبِ <مثال>فَاعُلٌ</مثال></مقطع>

    <مقطع>وتلحق ثالثة فيكون الحرف على فعال في الاسم والصفة فالاسم نحو قذالٍ وغزالٍ وزمانٍ والصفة نحو جمادٍ وجبانٍ وصناعٍ</مقطع>
    <مقطع>ويكون على فعالٍ فيهما فالأسماء نحو حمارٍ وإكاف وركابٍ والصفة كنازٌ وضناكٌ ودلاثٌ</مقطع>
    <مقطع>ويكون على فعال فيهما فالأسماء نحو غرابٍ وغلامٍ وقرادٍ وفؤادٍ والصفة نحو شجاعٍ وطوالٍ وخفاف</مقطع>
    <مقطع>وقد بين ما لحقته ثالثة فيما أوله الهمزة مزيدةً فهذا لحاقها بلا زيادة غيرها ثانية وثالثة</مقطع>
    <مقطع>وتلحق رابعةً مع غيرها من الزوائد وثالثة وثانية كما لحقت الهمزة مع غيرها من الزوائد</مقطع>
    <مقطع>فأما ما لحقته من ذلك ثانية فيكون على فاعول في الاسم والصفة فأما الصفة فنحو حاطوم يقال ماء حاطومٌ وسيل جاروف وماءٌ فاتورٌ والأسماء عاقول وماموس وعاطوس وطاووس</مقطع>
    <مقطع>ويكون على فاعال في الأسماء وهو قليل نحو ساباط وخاتامٍ وداناقٍ للدانق والخاتم ولا نعلمه جاء صفة<هارون مجلد="٤" صفحة="٢٤٩"/>ويكون على فاعلاء في الأسماء نحو القاصعاء والنافقاء والسابياء ولا نعلمه جاء صفة</مقطع>
    <مقطع>ويكون على فاعولاء في الأسماء وذلك عاشوراء وهو قليل ولا نعلمه جاء وصفاً وليس في الكلام فاعيلٌ ولا فاعيلٌ ولا فاعولٌ ولا فاعلاء ولا شيءٌ من هذا النحو لم نذكره</مقطع>
    <مقطع>وأما ما لحقته من ذلك ثالثة فيكون على مفاعل في الصفة نحو مقاتل ومسافر ومجاهدٍ ولا نعلمه جاء اسماً</مقطع>
    <مقطع>وقد يختصون الصفة بالبناء دون الاسم والاسم دون الصفة ويكون البناء في أحدهما أكثر منه في الآخر يعني في مثل إمخاضٍ وإسلامٍ وهو في المصادر أكثر وإنما جاء صفة في موضع واحد قالوا إسكاف وأفعل نحو أحمر وأصفر هو في الصفة أكثر منه في الاسم وقالوا أفكلٌ , أيدعٌ فكل واحد منهما يعوض إذا اختص أو كثر فيه البناء لما قل فيه من غير ذلك من الأبنية ولما صرف عنه من الأبنية وقد كتب بعض ما اختص به أحدهما دون الآخر وسنكتب البقية إن شاء الله</مقطع>
    <مقطع>ويكون على مفاعل ومفاعيل في الاسم والصفة ولا يكون هذا وما جاء على مثاله إلا مكسراً عليه الواحد للجمع فما كان منه في الاسم فنحو مساجد ومنابر ومقابر ومفاتيح ومخاريق وأما الصفة فنحو مداعس ومطافل ومكاسب ومقاول ومكاسيب ومكاريم ومناسيب<هارون مجلد="٤" صفحة="٢٥٠"/>ويكون على فواعل في الاسم والصفة فالاسم نحو حوائط وحواجز وجوائز وتوابل والصفة نحو حواسر وضوارب وقواتل</مقطع>
    <مقطع>وتكون الأسماء على فواعيل نحو خواتيم وسوابيط وقوارير ولا نعلمه جاء في الصفة كما لا يجئ واحده في الصفة</مقطع>
    <مقطع>ويكون على فعاعيل فيهما فالأسماء نحو السلاليم والبلاليط والبلاليق والصفة نحو العواوير والجبابير</مقطع>
    <مقطع>ويكون على فعاعل نحو السلالم والذرارح والزرارق ولا يستنكر أن يكون هذا في الصفة لأن في الصفة مثل زرقٍ وحولٍ فكما قالوا عواوير فجعلوه كالكلاب حين قالوا كلاليب كذلك يجعل هذا</مقطع>
    <مقطع>ويكون على فعالي مبدلةً الياء فيهما فالأسماء نحو صحاري وذفاري وزرافي يريدون الزرافات وأما الصفة فكسالى وحبالى وسكارى ويكون غير مبدلة الياء فيهما فالاسم نحو صحارٍ وذفارٍ وفيافٍ والصفات نحو عذارٍ وسعالٍ وعفار</مقطع>
    <مقطع>ويكون على فعالي لهما فالاسم نحو بخاتي وقماري ودباسي والصفة نحو الحوالي والدراري</مقطع>
    <مقطع>ويكون على فعاليل لهما فالاسم نحو الظنابيب والفساطيط والجلابيب والصفة نحو الشماليل والرعاديد والبهاليل<هارون مجلد="٤" صفحة="٢٥١"/>ويكون على فعالل لهما فالاسم نحو القرادد والصفة الرعابب والقعادد</مقطع>
    <مقطع>ويكون على فعالين في الاسم نحو سراحين وضباعين وفرازين وقرابين ولا نعلمه جاء في الصفة</مقطع>
    <مقطع>ويكون على فعالن نحو رعاشين وعلاجن وضيافن هذا في الصفة وقد جاء في الأسماء قالوا فراسين</مقطع>
    <مقطع>ويكون على فعاول فيهما فالاسم نحو جداول وجراول والصفة نحو القساور والحشاور</مقطع>
    <مقطع>ويكون على فعايل غير مهموز فالاسم نحو العثاير والحثايل إذا جمعت الحثيل والعثير ولا نعلمه جاء في الصفة كما لم يجئ واحده</مقطع>
    <مقطع>ويكون على فعائل فيهما فالأسماء نحو غرائر ورسائل والصفة نحو ظرائف وصحائح وصبائح</مقطع>
    <مقطع>ويكون على فياعل فيهما فالاسم نحو غيلم وغيالم وغيطلٍ وغياطل والدياسق والصفة نحو عيلم وعيالم والصياقل والجياحل</مقطع>
    <مقطع>ويكون على فياعيل فيهما فالأسماء نحو الدياميس والدياميم والصفة نحو الصياريف والبياطير</مقطع>
    <مقطع>ويكون على تفاعيل فالأسماء نحو التجافيف والتماثيل ولا نعلمه جاء وصفاً</مقطع>
    <مقطع>ويكون على تفاعل فالاسم نحو التتافل والتناضب ولا نعلمه جاء في الوصف</مقطع>
    <مقطع>ويكون على يفاعيل فالاسم نحو يرابيع ويعاقيب ويعاسيب<هارون مجلد="٤" صفحة="٢٥٢"/>والصفة نحو اليحاميم واليخاضير وصفوا باليخضور كما وصفوا باليحموم قال الراجز</مقطع>
