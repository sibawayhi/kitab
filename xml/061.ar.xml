<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="٦١">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ مَا يُنْصَبُ مِنْ الْمَصَاْدِرِ</مقطع>
       <مقطع رقم="٢">عَلَى إِضْمَاْرِ الْفِعْلِ غَيْرِ الْمُسْتَعْمَلِ إِظْهَاْرُهُ</مقطع>
   </عنوان>
    <مقطع رقم="٣">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٤">
       <قول>سَقْيًا وَرَعْيًا</قول>
   </مقطع>
    <مقطع رقم="٥">وَنَحْوُ قَوْلِكَ</مقطع>
    <مقطع رقم="٦">
       <قول>خَيْبَةً</قول>
   </مقطع>
    <مقطع رقم="٧">
       <قول>وَدَفَرًا</قول>
   </مقطع>
    <مقطع رقم="٨">
       <قول>وَجَدْعًا</قول>
   </مقطع>
    <مقطع رقم="٩">
       <قول>وَعَقْرًا</قول>
   </مقطع>
    <مقطع رقم="١٠">
       <قول>وَبُؤْسًا</قول>
   </مقطع>
    <مقطع رقم="١١">وَ<قول>أُفَّةً وَتُفَّةً</قول>
   </مقطع>
    <مقطع رقم="١٢">
       <قول>وَبُعْدًا وَسُحْقًا</قول>
   </مقطع>
    <مقطع رقم="١٣">وَمِنْ ذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٤">
       <قول>تَعْسًا وَتَبًّا</قول>
   </مقطع>
    <مقطع رقم="١٥">
       <قول>وَجُوْعًا وَجُوْسًا</قول>
   </مقطع>
    <مقطع رقم="١٦">وَنَحْوُ قَوْلِ ابْنِ مَيَّاْدَةَ</مقطع>
    <شاهدة رقم="١" xml:id="٦١-١">
       <بيت>
          <مصراع>تَفَاْقَدَ قَوْمِى إِذْ يَبِيْعُوْنَ مُهْجَتَّى</مصراع>
          <مصراع>بِجَاْرِيّةً بَهْرَا لَهُمْ بَعْدَهَا بَهْرَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٧">أَيْ  <حرف>تَبًّا</حرف>
   </مقطع>
    <مقطع رقم="١٨">وَقَاْلَ</مقطع>
    <شاهدة رقم="٢" xml:id="٦١-٢">
       <بيت>
          <مصراع>ثُمَّ قَاْلُوْا تُحِبُّهَا قُلْتُ بَهْرَا</مصراع>
          <مصراع>عَدَدَ الْنَّجْمِ وَالْحَصَى وَالْتُّرَاْبِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٣١١"/>
    <مقطع رقم="١٩">كَأَنَّهُ قَاْلَ</مقطع>
    <مقطع رقم="٢٠">
       <قول>جَهْدًا</قول>
   </مقطع>
    <مقطع رقم="٢١">أَيْ  <حرف>جَهْدِي ذٰلِكَ</حرف>
   </مقطع>
    <مقطع رقم="٢٢">وَإِنَّمَا يَنْتَصِبُ هٰذَا وَمَا أَشْبَهَهُ</مقطع>
    <مقطع رقم="٢٣">إِذَا ذُكِرَ مَذْكُوْرٌ</مقطع>
    <مقطع رقم="٢٤">فَدَعَوْتَ لَهُ أَوْ عَلَيْهِ</مقطع>
    <مقطع رقم="٢٥">عَلَى إِضْمَاْرِ الْفِعْلِ</مقطع>
    <مقطع رقم="٢٦">كَأَنَّكَ قُلْتَ</مقطع>
    <مقطع رقم="٢٧">
       <قول>سَقَاْكَ اللّٰهُ سَقْيًا</قول>
   </مقطع>
    <مقطع رقم="٢٨">
       <قول>وَرَعَاْكَ اللّٰهُ رَعْيًا</قول>
   </مقطع>
    <مقطع رقم="٢٩">
       <قول>وَخَيَّبَكَ اللّٰهُ خَيْبَةً</قول>
   </مقطع>
    <مقطع رقم="٣٠">فَكُلُّ هٰذَا وَمَا أَشْبَاْهُهُ</مقطع>
    <مقطع رقم="٣١">عَلَى هٰذَا يَنْتَصِبُ</مقطع>
    <مقطع رقم="٣٢">وَإِنَّمَا اخْتُزِلَ الْفِعْلُ هٰهُنَا</مقطع>
    <مقطع رقم="٣٣">لِأَنَّهُمْ جَعَلُوْهُ بَدَلًا</مقطع>
    <مقطع رقم="٣٤">مِنَ اللَّّفْظِ بِالْفِعْلِ</مقطع>
    <مقطع رقم="٣٥">كَمَا جُعِلَ  <حرف>الْحَذَرَ</حرف>  بَدَلًا مِنِ  <حرف>احْذَرْ</حرف>
   </مقطع>
    <مقطع رقم="٣٦">وَكَذٰلِكَ هٰذَا</مقطع>
    <مقطع رقم="٣٧">كَأَنَّهُ بَدَلٌ مِنْ</مقطع>
    <مقطع رقم="٣٨">
       <قول>سَقَاْكَ اللّٰهُ</قول>
   </مقطع>
    <مقطع رقم="٣٩">وَ<قول>رَعَاْكَ اللّٰهُ</قول>
   </مقطع>
    <مقطع رقم="٤٠">وَمِنْ <قول>خَيَّبَكَ اللّٰهُ</قول>
   </مقطع>
    <مقطع رقم="٤١">وَمَا جَاْءَ مِنْهُ</مقطع>
    <مقطع رقم="٤٢">لَا يَظْهَرُ لَهُ فِعْلٌ</مقطع>
    <مقطع رقم="٤٣">فَهُوَ عَلَى هٰذَا الْمِثَاْلِ نَصْبٌ</مقطع>
    <مقطع رقم="٤٤">كَأَنَّكَ جَعَلْتَ  <حرف>بَهْرًا</حرف>
   </مقطع>
    <مقطع رقم="٤٥">بَدَلًا مِنْ</مقطع>
    <مقطع رقم="٤٦">
       <قول>بَهَرَكَ الَّلَهُ</قول>
   </مقطع>
    <مقطع رقم="٤٧">فَهٰذَا تَمْثِيْلٌ</مقطع>
    <مقطع رقم="٤٨">وَلَا يُتَكَلَّمُ بِهِ</مقطع>
    <مقطع رقم="٤٩">وَمِمَّا يَدُلُّكَ أَيَضًا</مقطع>
    <مقطع رقم="٥٠">عَلَى أَنَّهُ عَلَى الْفِعْلِ نَصْبٌ</مقطع>
    <مقطع رقم="٥١">أَنَّكَ لَمْ تَذْكُرْ شَيْئًا</مقطع>
    <مقطع رقم="٥٢">مِنْ هَذِهِ الْمَصَاْدِرِ</مقطع>
    <مقطع رقم="٥٣">لِتَبْنِيَ عَلَيْهِ كَلَاْمًا</مقطع>
    <مقطع رقم="٥٤">كَمَا يُبْنَى عَلَى  <حرف>عَبْدِ اللّٰهِ</حرف>
   </مقطع>
    <مقطع رقم="٥٥">إِذَا ابْتَدَأْتَهُ</مقطع>
    <مقطع رقم="٥٦">وَأَنَّكَ لَمْ تَجْعَلْهُ مَبْنِيًّا عَلَى اسْمٍ مُضْمَرٍ فَي نِيَّتِكَ</مقطع>
    <مقطع رقم="٥٧">وَلَكِنَّهُ عَلَى دُعَاْئِكَ لَهُ أَوْ عَلَيْهِ</مقطع>
    <مقطع رقم="٥٨">وَأَمَّا ذِكْرُهُمْ  <حرف>لَكَ</حرف>  بَعْدَ  <حرف>سَقْيًا</حرف>
   </مقطع>
    <مقطع رقم="٥٩">فَإِنَّمَا هُوَ لِيُبَيِّنُوا الْمَعْنَى بِالدُّعَاْءِ</مقطع>
    <مقطع رقم="٦٠">وَرُبَّمَا تَرَكُوْهُ اسْتِغْنَاْءً</مقطع>
    <مقطع رقم="٦١">إِذَا عَرَفَ الدَّّاْعِي أَنَّهُ قَدْ عُلِمَ مَنْ يَعْنِيْ</مقطع>
    <مقطع رقم="٦٢">وَرُبَّمَا جَاْءَ بِهِ عَلَى <هارون مجلد="١" صفحة="٣١٢"/>الْعِلْمِ تَوْكِيْدًا</مقطع>
    <مقطع رقم="٦٣">فَهٰذَا بِمَنْزِلَةِ قَوْلِكَ</مقطع>
    <مقطع رقم="٦٤">
        <حرف>بِكَ</حرف>  بَعْدَ قَوْلِكَ  <حرف>مَرْحَبًا</حرف>
   </مقطع>
    <مقطع رقم="٦٥">يَجْرِيَاْنِ مَجْرَى وَاْحِدًا فِيْمَا وَصَفْتُ لَكَ</مقطع>
    <مقطع رقم="٦٦">وَقَدْ رَفَعَتِ الشُّّعَرَاْءُ بَعْضَ هٰذَا</مقطع>
    <مقطع رقم="٦٧">فَجَعَلُوْهُ مُبْتَدَأً</مقطع>
    <مقطع رقم="٦٨">وَجَعَلُوا مَا بَعْدَهُ مَبْنِيًّا عَلَيْهِ</مقطع>
    <مقطع رقم="٦٩">قَاْلَ أَبُوْ زُبَيْدٍ</مقطع>
    <شاهدة رقم="٣" xml:id="٦١-٣">
       <بيت>
          <مصراع>أَقَاْمَ وَأَقْوَى ذَاْتَ يَوْمٍ وَخَيْبَةٌ</مصراع>
          <مصراع>لأَوَلِمِنَ يَلْقَى وَشَرٌّ مُيَسَّرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٠">وَهٰذَا شَبِيْهٌ رَفْعُهُ بِبَيْتٍ</مقطع>
    <مقطع رقم="٧١">سَمِعْنَاْهُ مِمَّنْ يُوْثَقُ بِعَرَبِيَّتِهِ</مقطع>
    <مقطع رقم="٧٢">يَرْوِيْهِ لِقَوْمِهِ قَاْلَ</مقطع>
    <شاهدة رقم="٤" xml:id="٦١-٤">
       <بيت>
          <مصراع>عَذِيْرّكِ مِنْ مَوْلَى إِذَا نِمْتَ لَمْ يَنَمْ</مصراع>
          <مصراع>يَقُوْلُ الْخَنَا أَوْ تَعْتَرِيْكَ زَّناْبرَهُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٣">فَلَمْ يَحْمِلْ الْكَلَاْمَ عَلَى  <حرف>اعْذِرْنِي</حرف>
   </مقطع>
    <مقطع رقم="٧٤">وَلَكِنَّهُ قَاْلَ</مقطع>
    <مقطع رقم="٧٥">
       <قول>إِنَّمَا عُذْرُكَ أَيَّاْيَ مِنْ مَوْلًى هٰذَا أَمْرُهُ</قول>
   </مقطع>
    <هارون مجلد="١" صفحة="٣١٣"/>
    <مقطع رقم="٧٦">وَمِثْلُهُ قَوْلُ الشَّاْعِرِ</مقطع>
    <شاهدة رقم="٥" xml:id="٦١-٥">
       <بيت>
          <مصراع>أَهَاْجَيْتُمُ حَسَّاْنَ عِنْدَ ذَكَاْئِهِ</مصراع>
          <مصراع>فَْغَيٌّ لَأَوْلَاْدِ الْحِمَاْسِ طَوِيْلُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٧">وَفِيْهِ الْمَعْنَى الَّذِي يَكُوْنُ فَىِ الْمَنْصُوْبِ</مقطع>
    <مقطع رقم="٧٨">كَمَا أَنَّ قَوْلَكَ <قول>رَحْمَةُ اللّٰهِ عَلَيْهِ</قول>
   </مقطع>
    <مقطع رقم="٧٩">فِيْهِ مَعْنَى الدُّعَاْءِ</مقطع>
    <مقطع رقم="٨٠">كَأَنَّهُ قَاْلَ <قول>رَحِمَهُ اللّٰهُ</قول>
   </مقطع>
</باب>
