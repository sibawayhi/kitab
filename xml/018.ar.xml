<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="١٨">

   <عنوان>
      <مقطع رقم="١">هَذَا بَابٌ</مقطع>
      <مقطع رقم="٢">تُخْبِرُ فِيْهِ عَنِ النَّكِرَةِ بِنَكِرَةٍ</مقطع>
   </عنوان>

   <مقطع رقم="٣">وَذَلِكَ قَوْلُكَ <قول>مَا كَانَ أَحَدٌ مِثْلَكَ</قول></مقطع>
   <مقطع رقم="٤">وَ <قول>مَا كَانَ أَحَدٌ خَيْرًا مِنْكَ</قول></مقطع>
   <مقطع رقم="٥">وَ <قول>مَا كَانَ أَحَدٌ مُجْتَرِئًا عَلَيْكَ</قول></مقطع>
   <مقطع رقم="٦">وَإِنَّمَا حَسُنَ الْإِخْبَارُ هَهُنَا عَنِ النَّكِرَةِ</مقطع>
   <مقطع رقم="٧">حَيْثُ أَرَدْتَ أَنْ تَنْفِيَ</مقطع>
   <مقطع رقم="٨">أَنْ يَكُوْنَ فِي مِثْلِ حَالِهِ شَىْءٌ أَوْ فَوْقَهُ</مقطع>
   <مقطع رقم="٩">لِأَنَّ الْمُخَاطَبَ قَدْ يَحْتَاجَ إِلَى أَنْ تُعْلِمَهُ مِثْلَ هَذَا</مقطع>
   <مقطع رقم="١٠">وَإِذَا قُلْتَ <قول>كَانَ رَجُلٌ ذَاهِبًا</قول>
   </مقطع>
   <مقطع رقم="١١">فَلَيْسَ فِي هَذَا شَيْءٌ</مقطع>
   <مقطع رقم="١٢">تُعْلِمُهُ كَانَ جَهِلَهُ</مقطع>
   <مقطع رقم="١٣">وَلَوْ قُلْتَ <قول>كَانَ رَجُلٌ مِنْ آلِ فُلَانٍ فَارِسًا</قول>
   </مقطع>
   <مقطع رقم="١٤">حَسُنَ لِأَنَّهُ قَدْ يَحْتَاجُ إِلَى أَنْ تُعِلْمَهُ</مقطع>
   <مقطع رقم="١٥">أَنَّ ذَلِكَ فِي آلِ فُلَانٍ وَقَدْ يَجَهْلُهُ</مقطع>
   <مقطع رقم="١٦">وَلَوْ قُلْتَ <قول>كَانَ رَجُلٌ فِي قَوْمٍ عَاقِلًا )فارِسًا(</قول>
   </مقطع>
   <مقطع رقم="١٧">لَمْ يَحْسُنْ لِأَنَّهُ لَا يُسْتَنْكَرُ</مقطع>
   <مقطع رقم="١٨">أَنْ يَكُوْنَ فِي الدُّنْيَا عَاقِلٌ وَأَنْ يَكُوْنَ مِنْ قَوْمٍ</مقطع>
   <مقطع رقم="١٩">فَعَلَى هَذَا النَّحْوِ يَحْسُنُ وَيَقْبُحُ</مقطع>
   <مقطع رقم="٢٠">وَلَا يَجُوْزُ لِـ <حرف>أَحَدٍ</حرف>
   </مقطع>
   <مقطع رقم="٢١">أَنْ تَضَعَهُ فِي مَوْضِعِ وَاجِبٍ</مقطع>
   <مقطع رقم="٢٢">لَوْ قُلْتَ <قول>كَانَ أَحَدٌ مِنْ <هارون مجلد="١" صفحة="٥٤"/> آلِ فُلَانٍ</قول>
   </مقطع>
   <مقطع رقم="٢٣">لَمْ يَجُزْ لِأَنَّهُ إِنَّمَا وَقَعَ فِي كَلَامِهِمْ نَفْيًا عَامًّا</مقطع>
   <مقطع رقم="٢٤">يَقُوْلُ الرَّجُلُ <قول>أَتَانِي رَجُلٌ</قول>
   </مقطع>
   <مقطع رقم="٢٥">يُرِيْدُ وَاحِدًا فِي الْعَدَدِ لَا اثْنَيْنِ</مقطع>
   <مقطع رقم="٢٦">فَيُقَالُ <قول>مَا أَتَاكَ رَجُلٌ</قول>
   </مقطع>
   <مقطع رقم="٢٧">أَيْ أَتَاكَ أَكْثَرُ مِنْ ذَلِكَ</مقطع>
   <مقطع رقم="٢٨">أَوْ يَقُوْلُ <قول>أَتَانِي رَجُلٌ لَا إِمْرَأَةٌ</قول>
   </مقطع>
   <مقطع رقم="٢٩">فَيُقَالُ <قول>مَا أَتَاكَ رَجُلٌ</قول>
   </مقطع>
   <مقطع رقم="٣٠">أَيْ امْرَأَةٌ أَتَتْكَ</مقطع>
   <مقطع رقم="٣١">وَيَقُوْلُ <قول>أَتَانِي الْيَوْمَ رَجُلٌ</قول>
   </مقطع>
   <مقطع رقم="٣٢">أَيْ فِي قُوَّتِهِ وَنَفَاذِهِ</مقطع>
   <مقطع رقم="٣٣">فَتَقُوْلُ <قول>مَا أَتَاكَ رَجُلٌ</قول>
   </مقطع>
   <مقطع رقم="٣٤">أَيْ أَتَاكَ الضُّعَفَاءُ</مقطع>
   <مقطع رقم="٣٥">فَإِذَا قَالَ <قول>مَا أَتَاكَ أَحَدٌ</قول>
   </مقطع>
   <مقطع رقم="٣٦">صَارَ نَفْيًا عَامًّا لِهَذَا كُلِّهِ</مقطع>
   <مقطع رقم="٣٧">فَإِنَّمَا مَجْرَاهُ فِي الْكَلَامِ هَذَا</مقطع>
   <مقطع رقم="٣٨">وَلَوْ قَالَ <قول>مَا كَانَ مِثْلُكَ أَحَدًا</قول>
   </مقطع>
   <مقطع رقم="٣٩">أَوْ <قول>مَا كَانَ زَيْدٌ أَحَدًا</قول>
   </مقطع>
   <مقطع رقم="٤٠">كَانَ نَاقِضًا</مقطع>
   <مقطع رقم="٤١">لِأَنَّهُ قَدْ عُلِمَ أَنَّهُ</مقطع>
   <مقطع رقم="٤٢">لَا يَكُوْنُ زَيْدٌ وَلَا مِثْلُهُ</مقطع>
   <مقطع رقم="٤٣"> إِلَّا مِنْ النَّاسِ</مقطع>
   <مقطع رقم="٤٤">وَلَوْ قُلْتَ <قول>مَا كَانَ مِثْلَكَ الْيَوْمَ أَحَدٌ</قول>
   </مقطع>
   <مقطع رقم="٤٥">فَإِنَّهُ يَكُوْنُ</مقطع>
   <مقطع رقم="٤٦">أَنْ لَا يَكُوْنُ فِي اليَوْمِ</مقطع>
   <مقطع رقم="٤٧">إِنْسْانٌ عَلَى حَالِهِ</مقطع>
   <مقطع رقم="٤٨">إِلَّا أَنْ تَقُوْلَ</مقطع>
   <مقطع رقم="٤٩"><قول>أَيْ مِنَ الْأَحَدِينَ</قول>
   </مقطع>
   <مقطع رقم="٥٠">وَ <قول>مَا كَانَ مِثْلُكَ أَحَدًا</قول>
   </مقطع>
   <مقطع رقم="٥١">عَلَى وَجْهِ تَصْغِيْرِهِ</مقطع>
   <مقطع رقم="٥٢">فَتَصِيْرُ كَأَنَّكَ قُلْتَ</مقطع>
   <مقطع رقم="٥٣">
      <قول>مَا ضَرَبَ زَيْدٌ أَحَدًا</قول>
   </مقطع>
   <مقطع رقم="٥٤">وَ <قول>مَا قَتَلَ مِثْلُكَ أَحَدًا</قول>
   </مقطع>
   <مقطع رقم="٥٥">وَالتَّقْدِيْمُ وَالتَّأْخِيْرُ فِي هَذَا</مقطع>
   <مقطع رقم="٥٦">بِمَنْزِلَتِهِ فِي الْمَعْرِفَةِ</مقطع>
   <مقطع رقم="٥٧">وَمَا ذَكَرْتُ لَكَ مِنْ الْفِعْلِ</مقطع>
   <مقطع رقم="٥٨">وَحَسُنَتْ النَّكِرَةُ هَهُنَا</مقطع>
   <مقطع رقم="٥٩">فِي هَذَا الْبَابِ</مقطع>
   <مقطع رقم="٦٠">لِأَنَّكَ لَمْ تَجْعَلْ الْأَعْرَفَ</مقطع>
   <مقطع رقم="٦١">فِي مَوْضِعِ الْأَنْكَرِ</مقطع>
   <مقطع رقم="٦٢">وَهُمَا مُتَكَافِئَانِ</مقطع>
   <مقطع رقم="٦٣">كَمَا تَكَافَأَتِ الْمَعْرِفَتَانِ</مقطع>
   <مقطع رقم="٦٤">وَلِأَنَّ الْمُخَاطَبَ قَدْ يَحْتَاج</مقطع>
   <مقطع رقم="٦٥">إِلَى عِلْمِ مَا ذَكَرْتُ لَكَ</مقطع>
   <مقطع رقم="٦٦">وَقَدْ عَرَفَ مَنْ تَعْنِي بِذَلِكَ كَمَعْرِفَتكِ</مقطع>
   <مقطع رقم="٦٧">وَتَقُوْلُ <قول>مَا كَانَ فِيْهَا أَحَدٌ خَيْرٌ مِنْكَ</قول>
   </مقطع>
   <مقطع رقم="٦٨">وَ <قول>مَا كَانَ أَحَدٌ مِثْلُكَ فِيْهَا</قول>
   </مقطع>
   <مقطع رقم="٦٩">وَ <قول>لَيْسَ أَحَدٌ فِيْهَا خَيْرٌ مِنْكَ</قول>
   </مقطع>
   <مقطع رقم="٧٠">إِذَا جَعَلْتَ <حرف>فِيْهَا</حرف> مُسْتَقَرًّا</مقطع>
   <مقطع رقم="٧١">وَلَمْ تَجْعَلْهُ عَلَى قَوْلِكَ</مقطع>
   <مقطع رقم="٧٢">
      <قول>فِيْهَا زَيْدٌ قَائِمٌ</قول>
   </مقطع>
   <مقطع رقم="٧٣">أَجْرَيْتَ الصِّفَةَ عَلَى الاسْمِ</مقطع>
   <مقطع رقم="٧٤">فَإِنْ جَعَلْتَهُ عَلَى قَوْلِكَ</مقطع>
   <مقطع رقم="٧٥">
      <قول>فِيْهَا زَيْدٌ<هارون مجلد="١" صفحة="٥٥"/>قَائِمٌ</قول>
   </مقطع>
   <مقطع رقم="٧٦">نَصَبْتَ</مقطع>
   <مقطع رقم="٧٧">تَقُوْلُ <قول>مَا كَانَ فِيْهَا أَحَدٌ خَيْرًا مِنْكَ</قول>
   </مقطع>
   <مقطع رقم="٧٨">وَ <قول>مَا كَانَ أَحَدٌ خَيْرًا مِنْكَ فِيْهَا</قول>
   </مقطع>
   <مقطع رقم="٧٩">إِلَّا أَنَّكَ إِذَا أَرَدْتَ الْإِلْغَاءَ</مقطع>
   <مقطع رقم="٨٠">فَكُلَّمَا أَخَّرْتَ الَّذِي تُلْغِيهِ</مقطع>
   <مقطع رقم="٨١">كَانَ أَحْسَنَ</مقطع>
   <مقطع رقم="٨٢">وَإِذَا أَرَدْتَ أَنْ يَكُوْنَ مُسْتَقَرًّا</مقطع>
   <مقطع رقم="٨٣">تَكْتَفِي بِهِ</مقطع>
   <مقطع رقم="٨٤">فَكُلَّمَا قَدَّمْتَهُ كَانَ أَحْسَنَ</مقطع>
   <مقطع رقم="٨٥">لِأَنَّهُ إِذَا كَانَ عَامِلًا في شَيْءٍ قَدَّمْتَهُ</مقطع>
   <مقطع رقم="٨٦">كَمَا تُقَدِّمُ <حرف>أَظُنُّ</حرف> وَ <حرف>أَحْسَبُ</حرف>
   </مقطع>
   <مقطع رقم="٨٧">وَإِذَا أَلْغَيْتَ أَخَّرْتَهُ</مقطع>
   <مقطع رقم="٨٨">كَمَا تُؤَخِّرُهُمَا</مقطع>
   <مقطع رقم="٨٩">لِأَنَّهُمَا لَيْسَا يَعْمَلَانِ شَيْئًا</مقطع>
   <مقطع رقم="٩٠">وَالتَّقْدِيْمُ هَهُنَا</مقطع>
   <مقطع رقم="٩١">وَالتَّأْخِيْرُ فِيْمَا يَكُوْنُ ظَرْفًا</مقطع>
   <مقطع رقم="٩٢">أَوْ يَكُوْنُ اسْمًا</مقطع>
   <مقطع رقم="٩٣">فِي الْعِنَايَةِ وَالاهْتِمَامِ</مقطع>
   <مقطع رقم="٩٤">مِثْلُهُ فِيْمَا ذَكَرْتُ لَكَ</مقطع>
   <مقطع رقم="٩٥">فِي بَابِ الْفَاعِلِ وَالْمَفْعُوْلِ</مقطع>
   <مقطع رقم="٩٦">وَجَمِيِعُ مَا ذَكَرْتُ لَكَ</مقطع>
   <مقطع رقم="٩٧">مِنَ التَّقْدِيْمِ وَالتَّأْخِيْرِ</مقطع>
   <مقطع رقم="٩٨">وَالْإِلْغَاءِ وَالاسْتِقْرِارِ</مقطع>
   <مقطع رقم="٩٩">عَرَبِِيٌّ جَيِّدٌ كَثِيْرٌ</مقطع>
   <مقطع رقم="١٠٠">فَمِنْ ذَلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
   <مقطع رقم="١٠١">
      <آية>وَلَمْ يَكُنْ لَهُ كُفُوا أَحَدٌ</آية>
   </مقطع>
   <مقطع رقم="١٠٢">وَأَهْلُ الْجَفَاءُ مِنَ الْعَرَبِ يَقُوْلُوْنَ</مقطع>
   <مقطع رقم="١٠٣">
      <قول>وَلَمْ يَكُنْ كُفُوًا لَهُ أَحَدٌ</قول>
   </مقطع>
   <مقطع رقم="١٠٤">كَأَنَّهُمْ أَخَّرُوهَا</مقطع>
   <مقطع رقم="١٠٥">حَيْثُ كَانَتْ غَيْرَ مُسْتَقَرَّةٌ</مقطع>
   <مقطع رقم="١٠٦">وَقَالَ الْشَّاعِرُ</مقطع>
