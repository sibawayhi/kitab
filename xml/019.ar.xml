<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢٨"
     درنبورج="١-٢١"
     هارون="١-٥٧"
     يعقوب="١-١٠١"
     البكاء="١-١٢٠"
     رقم="١٩">

    <عنوان>
       <مقطع رقم="١">هَذَا بَابُ مَا أُجْرِيَ مَجْرَى  <حرف>لَيْسَ</حرف>
      </مقطع>
       <مقطع رقم="٢">فِي بَعْضِ الْمَوَاضِعِ بِلُغَةِ أَهْلِ الْحِجَازِ</مقطع>
       <مقطع رقم="٣">ثُمَّ يَصِيْرُ إِلَى أصلهِ</مقطع>
   </عنوان>

    <مقطع رقم="٤">وَذَلِكَ الْحَرْفُ <حرف>مَا</حرف></مقطع>
    <مقطع رقم="٥">تَقُوْلُ  <قول>مَا عَبْدُ اللَّهِ أَخَاكَ</قول></مقطع>
    <مقطع رقم="٦">وَ<قول>مَا زَيْدٌ مُنْطَلِقًا</قول></مقطع>
    <مقطع رقم="٧">وَأَمَّا بَنُوْ تَمِيْمٍ فيُجْرُونَهَا مَجْرَى  <حرف>أَمَّا</حرف> وَ<حرف>هَلْ</حرف></مقطع>
    <مقطع رقم="٨">أَي لَا يُعْمِلُوْنَهَا فِي شِيءٍ</مقطع>
    <مقطع رقم="٩">وَهُوَ الْقِيَاسُ</مقطع>
    <مقطع رقم="١٠">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَيْسَ  <حرف>مَا</حرف> كَـ<حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="١١">وَلَا يَكُوْنُ فِيْهَا إِضْمَارٌ</مقطع>
    <مقطع رقم="١٢">وَأَمَّا أَهْلُ الْحِجَازِ فَيُشَبِّهُونَهَا بِـ<حرف>لَيْسَ</حرف> إِذْ كَانَ مَعْنَاهَا كَمَعْنَاهَا</مقطع>
    <مقطع رقم="١٣">كَمَا شَبَّهُوْا بِهَا  <حرف>لَاتَ</حرف> فِي بَعْضِ الْمَوَاضِعِ</مقطع>
    <مقطع رقم="١٤">وَذَلِكَ مَعَ  <حرف>الْحِيْنِ</حرف> خَاصَّةً لَا تَكُوْنُ  <حرف>لَاتَ</حرف> إِلَّا مَعَ الْحِيْنِ</مقطع>
    <مقطع رقم="١٥">تُضْمِرُ فِيْهَا مَرْفُوْعًا وَتَنْصِبُ الْحِيْنِ لِأَنَّهُ مَفْعُوْلٌ بِهِ</مقطع>
    <مقطع رقم="١٦">وَلَمْ تَمَكَّنْ تَمَكُّنَهَا وَلَمْ تُسْتَعْمَلْ إِلَّا مُضْمَرًا فِيْهَا</مقطع>
    <مقطع رقم="١٧">لِأَنَّهَا لَيْسَتْ كَـ<حرف>لَيْسَ</حرف> فِي الْمُخَاطَبَةِ وَالْإِخْبَارِ عَنْ غَائِبٍ</مقطع>
    <مقطع رقم="١٨">تَقُوْلُ  <حرف>لَسْتَ</حرف> وَ<حرف>لَسْتِ</حرف> وَ<حرف>لَيْسُوْا</حرف> وَ<قول>عَبْدُ الْلْهِ لَيْسَ ذَاهِبًا</قول>
   </مقطع>
    <مقطع رقم="١٩">فَتَبْنِث عَلَى الْمُبْتَدَإِ وَتُضْمِرُ فِيْهِ</مقطع>
    <مقطع رقم="٢٠">وَلَا يَكُوْنُ هَذَا فِي  <حرف>لَاتَ</حرف>
   </مقطع>
    <مقطع رقم="٢١">لَا تَقُوْلُ  <قول>عَبْدُ اللَّهِ لَاتَ مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="٢٢">وَلَا  <قول>قَوْمُكَ لاتُوا مُنْطَلِقينَ</قول>
   </مقطع>
    <مقطع رقم="٢٣">وَنَظِيرُ  <حرف>لَاتَ</حرف> فِي أَنَّهُ لَا يَكُوْنُ إِلَّا مُضْمَرًا فِيْهِ  <حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٢٤">وَ<حرف>لَا يَكُوْنُ</حرف> فِي الِاسْتِثْنَاءِ</مقطع>
    <مقطع رقم="٢٥">إِذَا قُلْتَ  <قول>أَتَوْنِي لَيْسَ زَيْدًا وَلَا يَكُوْنُ بِشْرًا</قول>
   </مقطع>
    <هارون مجلد="١" صفحة="٥٧"/>
    <مقطع رقم="٢٦">وَزَعَمُوْا أَنَّ بَعْضَهُمْ قَرَأَ  <آية>وَ لَاتَ حِيْنُ مَنَاصّ</آية> وَهِيَ قَلِيْلَةٌ</مقطع>
    <مقطع رقم="٢٧">كَمَا قَالَ بَعْضُهُمْ فِي قَوْلِ سَعْدِ بْنِ مَالِكٍ الْقَيْسِىُّ</مقطع>
    
    <شاهدة رقم="١" xml:id="١٩-١">
       <بيت>
          <مصراع>مَنْ فَرَّ عَنْ نِيْرَانِهَا</مصراع>
          <مصراع>فَأَنَا ابْنُ قَيْسٍ لَا بَرَاحُ</مصراع>
      </بيت>
   </شاهدة>
   
    <مقطع رقم="٢٨">جَعَلَهَا بِمَنْزِلَةِ  <حرف>لَيْسَ</حرف> فَهِيَ بِمَنْزِلَةِ  <حرف>لَاتَ</حرف> فِي هَذَا الْوَجْهِ</مقطع>
    <مقطع رقم="٢٩">وَلا يُجَاوَزُ بِهَا هَذَا الْمَوْضِع [الْحِيْنِ] رَفَعْتَ أَوْ نَصَبْتَ</مقطع>
    <مقطع رقم="٣٠">وَلَا تَمَكَّنُ فِي الْكَلَامِ كَتَمَكُّن  <حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٣١">وَإِنَّمَا هِيَ مَعَ  <حرف>الْحِيْنِ</حرف>
   </مقطع>
    <مقطع رقم="٣٢">كَمَا أَنَّ  <حرف>لَدُنْ</حرف> إِنَّمَا يُنْصَبُ بِهَا <هارون مجلد="١" صفحة="٥٨"/>مَعَ  <حرف>غُدْوَةً</حرف>
   </مقطع>
    <مقطع رقم="٣٣">وَكَمَا أَنَّ التَّاءَ لَا تَجُرُّ فِي الْقَسَمِ وِلَا فِي غَيْرِهِ إِلَّا فِي  <حرف>اللَّهِ</حرف>
   </مقطع>
    <مقطع رقم="٣٤">إِذَا قُلْتَ  <قول>تَاللَّهِ لأَفَعَلَنَّ</قول>
   </مقطع>
    <مقطع رقم="٣٥">وَمِثْلُ ذَلِكَ قَوْلُهُ عَزَّ وَجَلَّ  <آية>مَا هَذَا بَشرًا</آية> فِي لُغَةِ أَهْلِ الْحِجَازِ</مقطع>
    <مقطع رقم="٣٦">وَبَنُو تَمِيْمٍ يَرْفَعُوْنَهَا إِلَّا مَنْ عَرَفَ [دَرَى] كَيْفَ هِيَ فِي الْمُصْحَفِ</مقطع>
    <مقطع رقم="٣٧">فَإِذَا قُلْتَ  <قول>مَا مُنْطَلِقٌ عُبْدُ اللَّهِ</قول> أَوْ  <قول>مَا مُسِيءٌ مَنْ أَعْتَبَ</قول> رَفَعْتَ</مقطع>
    <مقطع رقم="٣٨">وَلا يَجُوْزُ أَنْ يَكُوْنَ مُقَدَّمًا مِثْلَهُ مُؤَخَّرًا</مقطع>
    <مقطع رقم="٣٩">كَمَا أَنَّهُ لَا يَجُوْزُ أَنْ تَقُوْلَ  <قول>إِنَّ أَخُوْكَ عَبْدَ اللَّهِ</قول>
   </مقطع>
    <مقطع رقم="٤٠">عَلَى حَدِّ قَوْلِكَ  <قول>إِنَّ عَبْدَ اللَّهِ أَخُوْكَ</قول>
   </مقطع>
    <مقطع رقم="٤١">لِأَنَّهَا لَيْسَتْ بِفِعْلٍ وَإِنَّمَا جُعِلَتْ بِمَنْزِلَتِهِ</مقطع>
    <مقطع رقم="٤٢">فَكَمَا لَمْ تَتَصَرَّفُ  <حرف>إِنَّ</حرف> كَالْفِعْلِ</مقطع>
    <مقطع رقم="٤٣">كَذَلِكَ لَمْ يَجُزْ فِيْهَا كُلُّ مَا يَجُوْزُ فِيْهِ وَلَمْ تَقْوَ قُوَّتَهُ</مقطع>
    <مقطع رقم="٤٤">فَكَذَلِكَ  <حرف>ما</حرف>
   </مقطع>
    <مقطع رقم="٤٥">وَتَقُولُ  <قول>مَا زَيْدٌ إِلَّا مُنْطَلِقٌ</قول>
   </مقطع>
    <مقطع رقم="٤٦">تَسْتَوِي فِيْهِ اللُّغَتَانَ</مقطع>
    <مقطع رقم="٤٧">وَمِثْلُهُ قَوْلُهُ عَزَّ وَجَلَّ  <آية>مَا أَنْتُمْ إِلَّا بَشَرٌ مِثْلُنَا</آية>
   </مقطع>
    <مقطع رقم="٤٨">لَمْ تَقْوَ<حرف>مَا</حرف> حَيْثُ نَقَضْتَ مَعْنَى  <حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٤٩">كَمَا لَمْ تَقْوَ حِيْنَ قَدَّمْتَ الخَبَرَ</مقطع>
    <مقطع رقم="٥٠">فَمَعْنَى  <حرف>لَيْسَ</حرف> النَّفْيُ</مقطع>
    <مقطع رقم="٥١">كَمَا أَنَّ مَعْنَى  <حرف>كَانَ</حرف> الْوَاجِبُ</مقطع>
    <مقطع رقم="٥٢">وَكُلُّ وَاحِدٍ [واحِدَةٍ] مِنْهُمَا</مقطع>
    <مقطع رقم="٥٣">يَعْنِي  <حرف>كَانَ</حرف> وَ<حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٥٤">إِذَا جَرَّدْتَهُ [هَا] فَهَذَا مَعْنَاهُ [هَا]</مقطع>
    <مقطع رقم="٥٥">فَإِنْ قَلْتَ  <حرف>مَا كَانَ</حرف> أَدْخَلْتَ عَلَيْهَا مَا يُنْفَى بِهِ</مقطع>
    <مقطع رقم="٥٦">فَإِنْ قُلْتَ  <قول>لَيْسَ زَيْدٌ إِلَّا ذَاهِبًا</قول>
   </مقطع>
    <مقطع رقم="٥٧">أَدْخَلْتَ مَا يُوْجِبُ</مقطع>
    <مقطع رقم="٥٨">كَمَا أَدْخَلْتَ مَا يَنْفِي</مقطع>
    <مقطع رقم="٥٩">فَلَمْ تَقْوَ<حرف>مَا</حرف> فِي بَابِ قَلْبِ الْمَعْنَى</مقطع>
    <مقطع رقم="٦٠">كَمَا لَمْ تَقْوَ فِي تَقْدِيْمِ الْخَبَرِ</مقطع>
    <هارون مجلد="١" صفحة="٥٩"/>
    <مقطع رقم="٦١">وَزَعَمُوْا أَنَّ بَعْضَهُمْ قَالَ وَهُوَ الْفَرَزْدَقُ</مقطع>
    <شاهدة رقم="٢" xml:id="١٩-٢">
       <بيت>
          <مصراع>فَأَصْبَحُوا قَدْ أَعَادَ اللَّهُ نِعْمَتَهُمْ</مصراع>
          <مصراع>إِذْ هُمْ قُرَيشُ وَ إِذْ مَا مِثْلَهُمْ بَشَرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٦٢">وَهَذَا لَا يَكَادُ يُعْرَفُ كَمَا أَنَّ  <حرف>لَاتَ حَيْنُ مَنَاصٍ</حرف> كَذلُك</مقطع>
    <مقطع رقم="٦٣">وَرُبَّ شَئٍ هَكَذَا وَهُوَ كَقَوْلِ بَعْضِهِمْ  <قول>هَذِهِ مِلْحَفَةٌ جَدِيْدَةٌ</قول> فِي الِقْلّة</مقطع>
    <مقطع رقم="٦٤">وَتَقُولَ  <قول>مَا عَبْدُ اللَّهِ خَارِجًا وَلَا مَعْنٌ ذَاهِبٌ</قول>
   </مقطع>
    <مقطع رقم="٦٥">تَرْفَعُهُ عَلَى أَنْ لَا تُشْرِكُ الاسْمَ الْآخِرَ فِي  <حرف>مَا</حرف> وَلَكِن تَبْتَدِئُهُ</مقطع>
    <مقطع رقم="٦٦">كَمَا تَقُوْلُ  <قول>مَا كَانَ عَبْدُ اللَّهِ مُنْطَلِقًا وَلَا زَيْدٌ ذَاهِبٌ</قول>
   </مقطع>
    <مقطع رقم="٦٧">إِذَا لَمْ تَجْعَلْهُ عَلَى  <حرف>كَانَ</حرف> وَجَعَلْتَهُ غَيْرُ ذَاهِبٍ الآنَ</مقطع>
    <مقطع رقم="٦٨">وَكَذَلكِ  <حرف>لَيس</حرف>
   </مقطع>
    <مقطع رقم="٦٩">وَإِنَ شِئْتَ جَعَلَتْهَا  <حرف>لَا</حرف> الَّتِي يَكُوْنُ فِيْهَا الِاشْتِرَاكُ</مقطع>
    <مقطع رقم="٧٠">فَتَنْصِبُ كَمَا تَقُوْلُ فِي  <حرف>كَانَ</حرف>
        <قول>مَا كَانَ زَيْدٌ ذَاهِبًا وَلَا عَمْرٌو مُنطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="٧١">وَذَلكِ قَوْلُكَ  <قول>لَيْسَ زَيْدٌ ذَاهِبًا وَلَا أَخُوْكَ مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="٧٢">وَكَذَلِكَ  <قول>مَا زَيْدٌ ذَاهِبًا وَلَا مَعْنٌ خَارِجًا</قول>
   </مقطع>
    <مقطع رقم="٧٣">وَلَيْسَ قَوْلُهُمْ  <حرف>لَا يَكُوْنُ</حرف> فِي  <حرف>مَا</حرف> إِلَّا الْرَّفْعُ بِشَيْءٍ</مقطع>
    <مقطع رقم="٧٤">لِأَنَّهُمْ يَحْتَجُّونَ بِأَنَّكَ لَا تَسْتَطِيْعُ أَنْ تَقُوْلَ وَ<حرف>لَا لَيْسَ</حرف> وَ<حرف>لَا مَا</حرف>
   </مقطع>
    <مقطع رقم="٧٥">فَأَنْتَ تَقُوْلُ  <قول>لَيْسَ زَيْدٌ وَلَا أَخُوْهُ ذَاهِبَينَ</قول>
   </مقطع>
    <مقطع رقم="٧٦">وَمَا  <قول>عَمْرُوْ وَلَا خَالِدٌ مُنْطَلِقَيْنِ</قول>
   </مقطع>
    <مقطع رقم="٧٧">فَتُشْرِكُهُ مَعَ الْأَوَّلِ فِي  <حرف>لَيْسَ</حرف> وَفِي  <حرف>مَا</حرف>
       <هارون مجلد="١" صفحة="٦٠"/>
   </مقطع>
    <مقطع رقم="٧٨">فَمَا يَجُوْزُ فِيْهَا الْوَجْهَانِ</مقطع>
    <مقطع رقم="٧٩">كَمَا يَجُوْزُ فِي  <حرف>كَانَ</حرف>
   </مقطع>
    <مقطع رقم="٨٠">إِلَّا أَنَّكَ إِنْ حَمَلْتَهُ عَلَى الْأَوَّلِ أَوْ ابْتَدَأَتَ فَالْمَعْنَى أَنَّكَ تَنْفِي شَيْئًا غَيْرَ كَائِنٍ فِي حَالِ حَديِثِكَ</مقطع>
    <مقطع رقم="٨١">وَكَانَ الابْتِدَاءُ فِي  <حرف>كَانَ</حرف> أَوْضَحَ</مقطع>
    <مقطع رقم="٨٢">لِأَنَّ الْمَعْنَى يَكُوْنُ عَلَى  <حرف>مَا مَضَى</حرف> وَعَلَى  <حرف>مَا هُوَ الآنَ</حرف>
   </مقطع>
    <مقطع رقم="٨٣">وَلَيْسَ يَمْتَنِعُ أَنْ يُرَادَ بِهِ الْأَوّلُ</مقطع>
    <مقطع رقم="٨٤">كَمَا أَرَدْتَ فِي  <حرف>كَانَ</حرف>
   </مقطع>
    <مقطع رقم="٨٥">وَمِثْلُ ذَلِكَ قَوْلُكَ  <قول>إِنَّ زَيْدًا ظَرِيْفٌ وَعُمْرٌ وَ وَعَمْرًا</قول>
   </مقطع>
    <مقطع رقم="٨٦">فَالْمَعْنَى فِي الْحَدِيْثِ وَاحِدٌ</مقطع>
    <مقطع رقم="٨٧">وَمَا يُرَادُ مِنَ الْإِعْمَالِ مُّخْتَلِفٌ فِي  <حرف>كَانَ</حرف> وَ<حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٨٨">وماوَتَقُولُ  <قول>مَا زَيْدٌ كَرِيْمًا وَلَا عَاقِلًا أَبُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٨٩">تَجْعَلُهُ كَأَنَّهُ لِلْأَوَّلِ بِمَنْزِلَةِ  <حرف>كَرِيْمٍ</حرف>
   </مقطع>
    <مقطع رقم="٩٠">لِأَنَّهُ مُلْتَبِسٌ بِهِ إِذَا قُلْتَ  <حرف>أَبُوْهُ</حرف> تُجْرِيهُ عَلَيْهِ كَمَا أَجْرَيْتَ عَلَيْهِ الْكَرِيْمَ</مقطع>
    <مقطع رقم="٩١">لِأَنَّكَ لَوْ قُلْتَ  <قول>مَا زَيْدٌ عَاقِلًا أَبُوْهُ</قول> نَصَبْتَ وَكَانَ كَلامًا</مقطع>
    <مقطع رقم="٩٢">وَتَقُولُ  <قول>مَا زَيْدٌ ذَاهِبًا وَلَا عَاقِلٌ عُمْرٌو</قول>
   </مقطع>
    <مقطع رقم="٩٣">لِأَنَّكَ لَوْ قُلْتَ  <قول>مَا زَيْدٌ عَاقِلًا عَمْرٌوْ</قول> لِمَ يَكُنْ كَلَامًا</مقطع>
    <مقطع رقم="٩٤">لِأَنَّهُ لَيْسَ مِنْ سَبَبِهِ فَتَرْفَعُهُ عَلَى الِابْتِدَاءِ وَالْقَطْعُ مِنَ الْأَوَّلِ</مقطع>
    <مقطع رقم="٩٥">كَأَنَّكَ قُلْتَ  <قول>وَمَا عَاقِلٌ عُمَرٌو</قول>
   </مقطع>
    <مقطع رقم="٩٦">وَلَوْ جَعَلْتَهُ مِنْ سَبَبِهِ لَكَانَ فِيْهِ لَهُ إِضْمَارٌ كَالْهَاءِ فِي الْأَبِ وَنَحْوِهِا</مقطع>
    <مقطع رقم="٩٧">وَلَمْ يَجُزْ نَصْبُهُ عَلَى  <حرف>مَا</حرف>
   </مقطع>
    <مقطع رقم="٩٨">لِأَنَّكَ لَوْ ذَكَرْتَ  <حرف>مَا</حرف> ثُمَّ قَدَّمْتَ الْخَبَرَ لَمْ يَكُنْ إِلَا رْفَعًا</مقطع>
    <مقطع رقم="٩٩">وَإِنَ شِئْتَ قُلْتَ  <قول>مَا زَيْدٌ ذَاهِبًا وَلَا كَرِيْمٌ أَخُوْهُ</قول>
   </مقطع>
    <مقطع رقم="١٠٠">إِنَّ ابْتَدَأْتَهُ وَلَمْ تَجْعَلْهُ عَلَى  <حرف>مَا</حرف>
   </مقطع>
    <مقطع رقم="١٠١">كَمَا فَعَلْتَ ذَلِكَ حِيْنَ بَدَأْتَ بِالاسِمِ</مقطع>
    <مقطع رقم="١٠٢">وَلٰكِنَّ  <حرف>لَيْسَ</حرف> وَ<حرف>كَانَ</حرف> يَجُوْزُ فِيْهِمَا النَّصْبُ</مقطع>
    <مقطع رقم="١٠٣">وَإِنْ قَدَّمْتَ الْخَبَرَ [وَلَمْ يَكُنْ مُلْتَبِسًا] لِأَنَّكَ لَوْ ذَكَرْتُهُمَا كَانَ الْخَبَرُ فِيْهِمَا مُقَدَّمًا مِثْلَهُ مُؤَخَّرًا</مقطع>
    <مقطع رقم="١٠٤">وَذَلِكَ قَوْلُكَ  <قول>مَا كَانَ زَيْدٌ ذَاهِبًا وَلَا قَائِمًا عَمْرُوٌ</قول>
   </مقطع>
    <هارون مجلد="١" صفحة="٦١"/>
    <مقطع رقم="١٠٥">وَتَقُوْلُ  <قول>مَا زَيْدٌ ذَاهِبًا وَلَا مُحْسِنٌ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="١٠٦">الرَّفْعُ أَجْوَدُ وَإِنْ كُنْتَ تُرِيْدُ الْأَوَّلَ</مقطع>
    <مقطع رقم="١٠٧">لِأَنَّكَ لَوْ قُلْتَ  <قول>مَا زَيْدٌ مُنْطَلِقًا زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="١٠٨">لَمْ يَكُنْ حَدَّ الْكَلَامِ</مقطع>
    <مقطع رقم="١٠٩">وَكَانَ هٰهُنَا ضَعِيْفًا</مقطع>
    <مقطع رقم="١١٠">وَلَمْ يَكُنْ كَقَوْلِكَ  <قول>مَا زَيْدٌ مُنْطَلِقًا هُوَ</قول>
   </مقطع>
    <مقطع رقم="١١١">لِأَنَّكَ قَدْ اسْتَغْنَيْتَ عَنْ إِظْهَارِهِ</مقطع>
    <مقطع رقم="١١٢">وَإِنَّمَا يَنْبَغِي لَكَ أَنْ تُضْمَرَهُ</مقطع>
    <مقطع رقم="١١٣">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ  <قول>مَا زَيْدٌ مُنْطَلِقًا أَبُوْ زَيْدٍ</قول>
   </مقطع>
    <مقطع رقم="١١٤">لَمْ يَكُنْ كَقَوْلِكَ  <قول>مَا زَيْدٌ مُنْطَلِقًا أَبُوْهُ</قول>
   </مقطع>
    <مقطع رقم="١١٥">لِأَنَّكَ قَدْ اسْتَغْنَيْتَ عَنْ الْإِظْهَارِ</مقطع>
    <مقطع رقم="١١٦">فَلَّمَا كَانَ هَذَا كَذَلِكَ أُجْرِيَ مُجْرَى  <حرف>الْأَجْنَّبِيِّ</حرف>
   </مقطع>
    <مقطع رقم="١١٧">وَاسْتُؤْنِفَ عَلَى حَالِهِ [حِيالِهِ] حَيْثُ كَانَ هَذَا ضَعِيْفًا فِيهِ</مقطع>
    <مقطع رقم="١١٨">وَقَدْ يَجُوْزُ أَنْ تَنْصِبُ</مقطع>
    <مقطع رقم="١١٩">قَالَ الْشَّاعِرُ وَهُوَ سَوَادُ بْنُ عَدِىٍّ</مقطع>
    <شاهدة رقم="٣" xml:id="١٩-٣">
       <بيت>
          <مصراع>لَا أَرَى الْمَوْتَ يَسْبِقُ الْمَوْتَ شَيءٌ</مصراع>
          <مصراع>نَغَّصَ الْمَوْتُ ذَا الْغِنَى وَالْفَقِيْرَا</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٦٢"/>
    <مقطع رقم="١٢٠">فَأَعَادَ الإِظْهَارَ</مقطع>
    <مقطع رقم="١٢١">وَقَالَ الْجَعْدِيُّ</مقطع>
    <شاهدة رقم="٤" xml:id="١٩-٤">
       <بيت>
          <مصراع>إِذَا الْوَحْشُ ضَمَّ الْوَحْشَ فِي ظُلِلاتِهَا</مصراع>
          <مصراع>سَوَاقِطُ مِنْ حَرٍّ وَقَدْ كَانَ أَظْهَرَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٢٢">وَالرَّفْعُ الوَجِهُ</مقطع>
    <مقطع رقم="١٢٣">وَقَالَ الْفَرَزْدَقُ</مقطع>
    <شاهدة رقم="٥" xml:id="١٩-٥">
       <بيت>
          <مصراع>لَعَمْرُكَ مَا مَعْنٌ بِتَارِكِ حَقِّهِ</مصراع>
          <مصراع>وَلَا مُنْسِىءٌ مَعْنٌ وَلَا مُتَيَسِّرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٢٤">وَإِذَا قُلْتَ  <قول>مَا زَيْدٌ مُنْطَلِقًا أَبُوْ عَمْرٍو</قول> وَ وَأَبُوْ عَمْرٍو أَبُوْهُ لَمْ يَجُزْ</مقطع>
    <مقطع رقم="١٢٥">لِأَنَّكَ لَمْ تُعَرِّفْهُ بِهِ وَلَمْ تَذْكُرْ لَهُ إِضْمَارًا وَلَا إِظْهَارًا فِيْهِ</مقطع>
    <مقطع رقم="١٢٦">فَهَذَا لَا يَجُوْزُ لِأَنَّكَ لَمْ تَجْعَلْ لَهُ فِيْهِ سَبَبًا</مقطع>
    <مقطع رقم="١٢٧">وَتَقُولُ  <قول>مَا أَبُو زَيْنَبَ ذَاهِبًا وَلَا مُقِيْمَةٌ أُمُّهَا</قول>
   </مقطع>
    <مقطع رقم="١٢٨">تُرْفَعَ لِأَنَّكَ لَوْ قُلْتَ  <قول>مَا أَبُوْ زَيْنَبَ مُقِيِْمَةٌِ أُمُّهَا</قول> لَمْ يَجُزْ</مقطع>
    <مقطع رقم="١٢٩">لِأَنَّهَا لَيْسَتْ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="١٣٠">وَإِنَّمَا عَمِلَتْ  <حرف>مَا</حرف> فِيْهِ لَا فِي  <حرف>زَيْنَبَ</حرف>
   </مقطع>
    <مقطع رقم="١٣١">وَمِنَ ذَلِكَ قَوْلُ الشَّاعِرِ وَهُوَ الْأَعْوَرُ الشَّنِّيّ</مقطع>
    <هارون مجلد="١" صفحة="٦٣"/>
    <شاهدة رقم="٦" xml:id="١٩-٦">
       <بيت>
          <مصراع>هَوِّنْ عَلَيْكَ فَإِنَّ الْأُمُورَ</مصراع>
          <مصراع>بِكَفِّ الْإِلٰهِ مَقَادِيْرُهَا</مصراع>
      </بيت>
       <بيت>
          <مصراع>فَلَيْسَ بِآتِيكَ مَنْهِيُّهَا</مصراع>
          <مصراع>وَلَا قَاصِرٌ عَنْكَ مَأُمُورُهَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٣٢">لِأَنَّهُ جَعَلَ  <حرف>الْمَأْمُوْر</حرف> مِنْ سَبَبِ الْأُمُورِ</مقطع>
    <مقطع رقم="١٣٣">وَلَمْ يَجْعَلُهُ مِنْ سَبَبٍ الْمُذَكَّرِ وَهُوَ<حرف>الْمَنْهِيّ</حرف>
   </مقطع>
    <مقطع رقم="١٣٤">وَقَدْ جَرَّهُ قَوْمٌ فَجَعَلُوْا  <حرف>الْمَأْمُوْرَ</حرف> لِـ<حرف>الْمَنْهِيْ</حرف>
   </مقطع>
    <مقطع رقم="١٣٥">وَالْمَنْهِيُّ هُوَ الْأُمُوْرُ لِأَنَّهُ مَنْ الْأُمُورِ وَهُوَ بَعْضُهَا فَأَجْرَاهُ وَأَنَّثَهُ</مقطع>
    <مقطع رقم="١٣٦">كَمَا قَالَ جَرِيْرٌ</مقطع>
    <شاهدة رقم="٧" xml:id="١٩-٧">
       <بيت>
          <مصراع>إِذَا بَعْضُ السِّنِيْنَ تَعَرّقتْنَا</مصراع>
          <مصراع>كَفَى الْأَيْتَامَ فَقْدَ أَبِي الْيَتِيْمِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٣٧">وَمِثْلُ ذَلِكَ قَوْلُ الشَّاعِرِ النَّابِغَةِ الْجَعْدِيّ</مقطع>
    <شاهدة رقم="٨" xml:id="١٩-٨">
       <بيت>
          <مصراع>فَلَيْسَ بِمَعْرُوْفٍ لَنَا أَنْ نَرُدَّهَا</مصراع>
          <مصراع>صِحَاحَا وَلَا مُسْتَنْكَرٌ أَنْ تُعَقْرا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٣٨">كَأَنَّهُ قَالَ لَيْسَ بِمَعْرُوْفٍ لَنَا رَدُّهَا صِحَاحًا وَلَا مُسْتَنْكَرٌ عَقْرُهَا</مقطع>
    <مقطع رقم="١٣٩">وَالْعَقْرُ لَيْسَ للرّد</مقطع>
    <مقطع رقم="١٤٠">وَقَدْ يَجُوْزُ أَنْ يَجُرَّ وَيَحْمِلَهُ عَلَى الرَّدِّ وَيُؤَنَّثُ لِأَنَّهُ مَنْ الْخَيْلِ</مقطع>
    <مقطع رقم="١٤١">كَمَا قَالَ ذُوْ الرُّمَّةِ</مقطع>
    <هارون مجلد="١" صفحة="٦٤"/>
    <شاهدة رقم="٩" xml:id="١٩-٩">
       <بيت>
          <مصراع>مَشَيْنَ كَمَا أَهْتَزّتِ رِمَاحٌ تَسَفَّهَتْ</مصراع>
          <مصراع>أَعَالِيَهَا مَرُّ الْرَّيَاحِ النَّوَاسْمْ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٤٢">كَأَنَّهُ قَالَ  <قول>تَسَفَّهَتْهَا الرِّيَاحُ</قول>
   </مقطع>
    <مقطع رقم="١٤٣">وَكَأَنَّهُ قَالَ  <قول>لَيْسَ بآتِيَتِكِ مَنْهِيُّهَا وَلَيْسَ بِمَعْرُوْفَةٍ رَدُّهَا</قول>
   </مقطع>
    <مقطع رقم="١٤٤">حِيْنَ كَانَ مِنْ الْخَيْلِ وَالْخَيْلُ مُؤَنَّثٌ فَأَنَّث</مقطع>
    <مقطع رقم="١٤٥">وَمِثْلُ هَذَا قَوْلُهُ تَعَالَى جَدُّهُ  <آية>بَلَى مَنْ أَسْلَمَ وَجْهَهُ اللَّهُ وَهُوَ مُحْسِنٌ فَلَهُ أَجْرُهُ عِنْدَ رَبِّهِ وَلَا خَوْفٌ عَلَيْهِمْ وَلَا هُمْ يَحْزَنُوْنَ</آية>
   </مقطع>
    <مقطع رقم="١٤٦">أَجْرَى الْأَوَّلَ عَلَى لَفْظِ الْوَاحِدِ وَالْآخِرَ عَلَى الْمَعْنَى</مقطع>
    <مقطع رقم="١٤٧">هَذَا مِثْلُهُ فِي أَنَّهُ تُكُلِّمَ بِهِ مُذَكَّرًا ثُمَّ أُنّثُ كَمَا جَمَعَ هَهُنَا</مقطع>
    <مقطع رقم="١٤٨">وَهُوَ فِي قَوْلِهِ  <قول>لَيْسَ بآتِيَتِكِ مَنْهِيُّهَا</قول>
   </مقطع>
    <مقطع رقم="١٤٩">كَأَنَّهُ قَالَ  <قول>لَيْسَ بآتِيَتِكِ الأْمَورُ</قول>
   </مقطع>
    <مقطع رقم="١٥٠">وَفِي  <قول>لَيْسَ بِمَعْرُوْفَةٍ رَدُّهَا</قول> كَأَنَّهُ قَالَ  <قول>لَيْسَ بِمَعْرُوفَةٍ خَيْلُنَا صِحَاحًا</قول>
   </مقطع>
    <مقطع رقم="١٥١">وَإِنَ شِئْتَ نَصَبْتَ فَقْلْتَ  <قول>وَلَا مُسْتَنْكَرًا أَنْ تُعَقَّرًا وَلَا قَاصِرًا عَنْكَ مَأْمُوْرُهَا</قول>
   </مقطع>
    <مقطع رقم="١٥٢">عَلَى قَوْلِكَ  <قول>لَيْسَ زَيْدٌ ذَاهِبًا وَلَا عَمْرٌو مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="١٥٣">أَوْ  <قول>وَلَا مُنْطَلِقًا عَمْرٌو</قول>
   </مقطع>
    <مقطع رقم="١٥٤">وَتَقُولَ  <قول>مَا كُلُّ سَوْادَءَ تَمْرَةً وَلَا بَيْضَاءَ شَحْمَةٌ</قول>
   </مقطع>
    <مقطع رقم="١٥٥">وَإِنْ شِئْتَ نَصَبْتَ <هارون مجلد="١" صفحة="٦٥"/>شَحْمَةً</مقطع>
    <مقطع رقم="١٥٦">وَبَيْضَاءُ فِي مَوْضِعِ جَرٍّ</مقطع>
    <مقطع رقم="١٥٧">كَأَنَّكَ أَظْهَرْتَ  <حرف>كُلَّ</حرف>
   </مقطع>
    <مقطع رقم="١٥٨">فَقُلْتَ  <قول>وَلَا كُلُّ بَيضاء</قول>
   </مقطع>
    <مقطع رقم="١٥٩">قَالَ الشَّاعِرُ أَبُوْ دُوَادٍ</مقطع>
    <شاهدة رقم="١٠" xml:id="١٩-١٠">
       <بيت>
          <مصراع>أَكُلَّ أَمْرِئٍ تَحْسَبِيْنَ امْرَأَ</مصراع>
          <مصراع>وَنَارٍ تَوَقَّدُ بِاللَّيْلِ نَارَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٦٠">فَاسْتَغْنَيْتَ عَنْ تَثْنِيَةِ  <حرف>كُلِّ</حرف>
   </مقطع>
    <مقطع رقم="١٦١">لِذِكْرِكَ إِيَّاهُ فِي أَوَّلِ الْكَلَامِ وَلِقِلَّةِ الْتِبَاسِهِ عَلَى الْمُخَاطْبِ</مقطع>
    <مقطع رقم="١٦٢">وَجَازَ كَمَا جَازَ فِي قَوْلِكَ  <قول>مَا مِثْلُ عَبْدِ اللَّهِ يَقُوْلُ ذَاكَ وَلَا أَخِيْهِ</قول>
   </مقطع>
    <مقطع رقم="١٦٣">وَإِنْ شِئْتَ قُلْتَ  <قول>وَلَا مِثْلُ أَخِيهِ</قول>
   </مقطع>
    <مقطع رقم="١٦٤">فَكَما جَازَ فِي جَمْعِ الْخَبَرِ كَذَلِكَ يَجُوْزُ فِي تَفْريْقِهِ</مقطع>
    <مقطع رقم="١٦٥">وَتَفْرِيقُهُ أَنْ تَقُوْلَ  <قول>مَا مِثْلُ عَبْدِ اللَّهِ يَقُوْلُ ذَاكَ وَلَا أَخِيْهِ يَكْرَهُ ذَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٦٦">وَمِثْلُ ذَلِكَ  <قول>مَا مِثْلُ أَخِيْكَ وَلَا أَبِيكَ يَقُوْلانِ ذَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٦٧">فَلَما جَازَ فِي هَذَا جَازَ فِي ذَلِكَ</مقطع>
</باب>
