<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٢٦"
     درنبورج="١-١٠٥"
     هارون="١-٢٤٨"
     يعقوب="١-٣٠٦"
     البكاء="١-٣٢٤"
     رقم="٤٩">
   <عنوان>
      <مقطع رقم="١">وَهٰذَا بَابٌ مِنَ الْفِعْلِ</مقطع>
      <مقطع رقم="٢">سُمِّيَ الْفِعْلُ فِيْهِ بِأَسْمَاءٍ مُضَافَةٍ</مقطع>
      <مقطع رقم="٣">لَيْسَتْ مِنْ أَمْثِلَةِ<ص مادة="فعل حدث">
            <متن>الْفِعْلِ الْحَادِثِ</متن>
         </ص>
      </مقطع>
   </عنوان>
   <مقطع رقم="٤">وَلَكِنَّهَا بِمَنْزِلَةِ الْأَسْمَاءِ الْمُفْرَدَةِ الَّتِي كَانَتْ لِلْفِعْلِ</مقطع>
   <مقطع رقم="٥">نَحْو <حرف>رُوَيْدَ</حرف> وَ <حرف>حَيَّهَلَ</حرف>
   </مقطع>
   <مقطع رقم="٦">وَمَجْرَاهُنَّ وَاحِدٌ</مقطع>
   <مقطع رقم="٧">وَمَوْضِعُهُنَّ مِنْ الْكَلَامِ الْأَمْرُ وَالنَّهْيُ</مقطع>
   <مقطع رقم="٨">إِذَا كَانَتْ لِلْمُخَاطَبِ الْمَأْمُوْرِ وَالْمَنْهِيِّ</مقطع>
   <مقطع رقم="٩">وَإِنَّمَا اسْتَوَتْ هِيَ وَ <حرف>رُوَيْدَ</حرف> وَمَا أَشْبَهَ <حرف>رُوَيْدَ</حرف>
   </مقطع>
   <مقطع رقم="١٠">كَمَا اسْتَوَى<ص مادة="فرد">
         <متن>الْمُفْرَدُ</متن>
      </ص>وَ<ص مادة="ضيف">
         <متن>الْمُضَافُ</متن>
      </ص>
   </مقطع>
   <مقطع رقم="١١">إِذَا كَانَا اسْمَيْنِ</مقطع>
   <مقطع رقم="١٢">نَحْوُ <حرف>عَبْدُ اللّٰهِ</حرف> وَ <حرف>زَيْدٌ</حرف>
   </مقطع>
   <مقطع رقم="١٣">مَجْرَاهُمَا فِي الْعَرَبِيَّةِ سَوَاءٌُ</مقطع>
   <مقطع رقم="١٤">وَمِنْهَا مَا يَتَعَدَّى<ص مادة="أمر">
         <متن>الْمَأْمُوْرَ</متن>
      </ص>إِلَى<ص مادة="أمر">
         <متن>مَأْمُوْرٍ بِهِ</متن>
      </ص>
   </مقطع>
   <مقطع رقم="١٥">وَمِنْهَا مَا يَتَعَدَّى<ص مادة="نهي">
         <متن>الْمَنْهِيِّ</متن>
      </ص>إِلَى<ص مادة="نهي">
         <متن>الْمَنْهِيِّ عَنْهُ</متن>
      </ص>
   </مقطع>
   <مقطع رقم="١٦">وَمِنْهَا مَالْا يَتَعَدَّى الْمَأْمُوْرَ وَلَا الْمَنْهِيَّ</مقطع>
   <هارون مجلد="١" صفحة="٢٤٨"/>
   <مقطع رقم="١٧">فَأَمَّا مَا يَتَعَدَّى الْمَأْمُوْرَ إِلَى مَأْمُورٍ بِهِ</مقطع>
   <مقطع رقم="١٨">فَهُوَ قَوْلُكَ <قول>عَلَيْكَ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="١٩">وَ <قول>دُوْنَكَ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٢٠">وَ <قول>عِنْدَكَ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٢١">تَأْمُرُهُ بِهِ</مقطع>
   <مقطع رقم="٢٢">حَدَّثَنَا بِذٰلِكَ أَبُوْ الْخَطَّابِ</مقطع>
   <مقطع رقم="٢٣">وَأَمَّا مَا تَعَدَّى الْمَنْهِيَّ إِلَى مَنْهِيٍّ عَنْهُ</مقطع>
   <مقطع رقم="٢٤">فَقَوْلُكَ <قول>حَذَرَكَ زَيْدًا</قول> وَ <قول>حَذَارَكَ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٢٥">سَمِعْنَاهُمَا مِنْ الْعَرَبِ</مقطع>
   <مقطع رقم="٢٦">وَأَمَّا مَالْا يَتَعَدَّى الْمَأْمُوْرَ وَلَا الْمَنْهِيَّ</مقطع>
   <مقطع رقم="٢٧">فَقَوْلُكَ <قول>مَكَانَكَ</قول> وَ <قول>بَعْدَكَ</قول>
   </مقطع>
   <مقطع رقم="٢٨">إِذَا قُلْتَ <قول>تَأَخَّرْ</قول>
   </مقطع>
   <مقطع رقم="٢٩">أَوْ حَذَّرْتَهُ شَيْئًا خَلْفَهُ</مقطع>
   <مقطع رقم="٣٠">وَكَذٰلِكَ <قول>عِنْدَكَ</قول>
   </مقطع>
   <مقطع رقم="٣١">إِذَا كُنْتَ تُحَذِّرُهُ مِنْ بَيْنِ يَدَيْهِ شَيْئًا</مقطع>
   <مقطع رقم="٣٢">أَوْ تَأْمُرُهُ أَنْ يَتَقَدَّمَ</مقطع>
   <مقطع رقم="٣٣">وَكَذٰلِكَ <قول>فَرَطَكَ</قول>
   </مقطع>
   <مقطع رقم="٣٤">إِذَا كُنْتَ تُحَذِّرُهُ مِنْ بَيْنَ يَدَيْهِ شَيْئًا</مقطع>
   <مقطع رقم="٣٥">أَوْ تَأْمُرُهُ أَنْ يَتَقَدَّمَ</مقطع>
   <مقطع رقم="٣٦">وَمِثْلُهَا <قول>أَمَامَكَ</قول>
   </مقطع>
   <مقطع رقم="٣٧">إِذَا كُنْتَ تُحَذِّرُهُ أَوْ تُبَصِّرُهُ شَيْئًا</مقطع>
   <مقطع رقم="٣٨">وَ <قول>إِلَيْكَ</قول> إِذَا قُلْتَ <قول>تَنَحِّ</قول>
   </مقطع>
   <مقطع رقم="٣٩">وَ <قول>وَرَاءَكَ</قول> إِذَا قُلْتَ <قول>افْطُنْ لِمَا خَلْفَكَ</قول>
   </مقطع>
   <مقطع رقم="٤٠">حَدَّثَنَا أَبُوْ الْخَطَّابِ أَنَّهُ سَمِعَ مِنْ الْعَرَبِ مَنْ يُقَالُ لَهُ <قول>إِلَيْكَ</قول>
   </مقطع>
   <هارون مجلد="١" صفحة="٢٤٩"/>
   <مقطع رقم="٤١">فَيَقُوْلُ <قول>إِلَىَّ</قول>
   </مقطع>
   <مقطع رقم="٤٢">كَأَنَّهُ قِيْلَ لَهُ تَنَحِّ</مقطع>
   <مقطع رقم="٤٣">فَقَالَ <قول>أَتَنَحَّى</قول>
   </مقطع>
   <مقطع رقم="٤٤">وَلَا يُقَالُ</مقطع>
   <مقطع رقم="٤٥">إِذَا قِيْلَ لِأَحَدِهِمْ <قول>دُوْنَكَ</قول>
   </مقطع>
   <مقطع رقم="٤٦">
      <قول>دُوْنِي</قول> وَلَا <قول>عَلَيَّ</قول>
   </مقطع>
   <مقطع رقم="٤٧">هٰذَا النَّحْوُ</مقطع>
   <مقطع رقم="٤٨">إِنَّمَا سَمِعْنَاهُ فِىْ هٰذَا الْحَرْفِ وَحْدَهُ</مقطع>
   <مقطع رقم="٤٩">وَلَيْسَ لَهَا قُوَّةُ الْفِعْلِ</مقطع>
   <مقطع رقم="٥٠">فَ‍ـ<ص مادة="قيس">
         <متن>تُقَاسُ</متن>
      </ص>
   </مقطع>
   <مقطع رقم="٥١">وَاعْلَمْ أَنَّ هَذِهِ الْأَسْمَاءَ الْمُضَافَةَ</مقطع>
   <مقطع رقم="٥٢">بِمَنْزِلَةِ الْأَسْمَاءِ الْمُفْرَدَةِ</مقطع>
   <مقطع رقم="٥٣"> في<ص مادة="عطف">
         <متن>الْعَطْفِ</متن>
      </ص>وَالصِّفَاتِ</مقطع>
   <مقطع رقم="٥٤">وَفِيْمَا قَبُحَ فِيْهَا وَحَسُنَ</مقطع>
   <مقطع رقم="٥٥">لِأَنَّ الْفَاعِلَ الْمَأْمُوْرَ وَالْفَاعِلَ الْمَنْهِيَّ في هٰذَا الْبَابِ<ص مادة="ضمر نوي">
         <متن>مُضْمَرَانِ فِىْ النِّيَّةِ</متن>
      </ص>
   </مقطع>
   <مقطع رقم="٥٦">وَلَا يَجُوْزُ أَنْ تَقُوْلَ <قول>رُوَيْدَهُ زَيْدًا</قول> وَ <قول>دُونَهُ عُمْرًا</قول>
   </مقطع>
   <مقطع رقم="٥٧"> وَأَنْتَ تُرِيْدُ غَيْرَ الْمُخَاطَبِ</مقطع>
   <مقطع رقم="٥٨">لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا يَتَصَرَّفُ تَصَرُّفَهُ</مقطع>
   <مقطع رقم="٥٩">وَحَدَّثَنِي مَنْ سَمِعَهُ أَنَّ بَعْضَهُمْ قَالَ <قول>عَلَيْهِ رَجُلًا لَيْسَنِي</قول>
   </مقطع>
   <مقطع رقم="٦٠">وَهٰذَا قَلِيْلٌ شَبَّهُوْهُ بِالْفِعْلِ</مقطع>
   <مقطع رقم="٦١">وَقَدْ يَجُوْزُ أَنْ تَقُوْلَ <قول>عَلَيْكُمْ أَنْفُسِكُمْ</قول> وَ <قول>أَجْمَعِينَ</قول>
   </مقطع>
   <مقطع رقم="٦٢"> فَتَحْمِلَهُ عَلَى الْمُضْمَرِ الْمَجْرُوْرِ الَّذِي ذَكَرْتَهُ لِلْمُخَاطَبِ</مقطع>
   <مقطع رقم="٦٣">كَمَا حَمَلْتَهُ عَلَى <حرف>لَكَ</حرف> حِيْنَ ذَكَرْتَهَا بَعْدَ <حرف>هَلُمَّ</حرف>
   </مقطع>
   <مقطع رقم="٦٤"> وَلَمْ تَحْمِلْ عَلَى الْمُضْمَرِ الْفَاعِلِ فِي النِّيَّةِ فَجَازَ ذٰلِكَ</مقطع>
   <مقطع رقم="٦٥">وَيُدُلُّكَ عَلَى أَنَّكَ إِذَا قُلْتَ <قول>عَلَيْكَ</قول>
   </مقطع>
   <مقطع رقم="٦٦"> فَقَدْ أَضْمَرْتَ فَاعِلًا في النِّيَّةِ</مقطع>
   <مقطع رقم="٦٧">وَإِنَّمَا الْكَافُ لِلْمُخَاطَبَةِ</مقطع>
   <مقطع رقم="٦٨">قَوْلُكَ <قول>عَلَىَّ زَيْدًا</قول> وَإِنَّمَا أَدْخَلْتَ الْيَاءَ عَلَى مِثْلِ قَوْلِكَ لِلْمَأْمُوْرِ <قول>أوْلِنِي زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٦٩">فَلَوْ قُلْتَ <قول>أَنْتَ نَفْسُكَ</قول> لَمْ يَكُنْ إِلَا رَفْعًا</مقطع>
   <مقطع رقم="٧٠">وَلَوْ قَالَ <قول>أَنَا نَفْسِي</قول> لَمْ يَكُنْ إِلَا جَرًّا</مقطع>
   <مقطع رقم="٧١">أَلَا تِرى أَنَّ الْيَاءَ وَالْكَافَ إِنَّمَا جَاءَتَا لِتَفْصِلَا بَيْنَ الْمَأْمُوْرِ وَالْأَمْرِ فِىْ الْمُخَاطَبَةِ</مقطع>
   <مقطع رقم="٧٢">وَإِذِا قَالَ <قول>عَلَيْكَ زَيْدًا</قول> فَكَأَنَّهُ قَالَ <قول>لَهُ ائْتِ</قول>
      <هارون مجلد="١" صفحة="٢٥٠"/>زَيْدًا</مقطع>
   <مقطع رقم="٧٣">أَلَا تَرَىَ أَنَّ لِلْمَأْمُوْرِ اسْمَيْنِ اسْمًا لِلْمُخَاطَبَةِ مَجْرُوْرًا وَاسْمُهُ الْفَاعِلُ الْمُضْمَرُ فِىْ النِّيَّةِ</مقطع>
   <مقطع رقم="٧٤">كَمَا كَانَ لَهُ اسْمٌ مُضْمَرٌ فِىْ النِّيَّةِ حِيْنَ قُلْتُ <قول>عَلَىَّ</قول>
   </مقطع>
   <مقطع رقم="٧٥">فَإِذَا قُلْتَ <قول>عَلَيْكَ</قول> فَلَهُ اسْمَانِ مَجْرُوْرٌ وَمَرْفُوعٌ</مقطع>
   <مقطع رقم="٧٦">وَلَا يَحْسُنُ أَنْ تَقُوْلَ <قول>عَلَيْكَ وَأَخِيْكَ</قول> كَمَا لَا يَحْسُنُ أَنْ تَقُوْلَ <قول>هَلُمَّ لَكَ وَأَخِيْكَ</قول>
   </مقطع>
   <مقطع رقم="٧٧">وَكَذٰلِكَ <قول>حَذَّرَكَ</قول> يُدُلُّكَ عَلَى أَنَّ <قول>حَذَّرَكَ</قول> بِمَنْزِلَةِ <قول>عَلَيْكَ</قول> قَوْلَكُ <قول>تَحْذيَرِي زَيْدًا</قول> إِذَا أَرَدْتَ <قول>حَذَّرْنِي زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٧٨">فَالْمَصْدَرُ وَغَيْرُهُ في هٰذَا الْبَابِ سَوَاءٌ</مقطع>
   <مقطع رقم="٧٩">وَمَنْ جَعَلَ <حرف>رُوَيْدًا</حرف> مَصْدَرًا قَالَ <قول>رُوَيْدَكَ نَفْسِكَ</قول> إِذَا أَرَادَ أَنْ يَحْمِلَ <حرف>نَفْسَكَ</حرف> عَلَى الْكَافِ</مقطع>
   <مقطع رقم="٨٠">كَمَا قَالَ <قول>عَلَيْكَ نَفْسِكَ</قول> حِيْنَ حَمَلَ الْكَلَامَ عَلَى الْكَافِ</مقطع>
   <مقطع رقم="٨١">وَهِىَ مَثَلُ <حرف>حَذَّرَكَ</حرف> سَوَاءٌ إِذَا جَعَلْتَهُ مَصْدَرًا</مقطع>
   <مقطع رقم="٨٢">لِأَنَّ الْحَذَرَ مَصْدَرٌ وَهُوَ مُضَافٌ إِلَى الْكَافِ</مقطع>
   <مقطع رقم="٨٣">فَإِنْ حَمَلْتَ <حرف>نَفْسَكِ</حرف> عَلَى الْكَافِ جَرَرْتَ</مقطع>
   <مقطع رقم="٨٤">وَإِنْ حَمَلْتَهُ عَلَى الْمُضْمَرُ في النِّيَّةِ رَفَعْتَ</مقطع>
   <مقطع رقم="٨٥">وَكَذٰلِكَ <حرف>رُوَيْدَكُمْ</حرف> إِذَا أَرَدْتَ الْكَافَ تَقُوْلُ <قول>رُوَيْدَكُمْ أَجْمَعِيْنَ</قول>
   </مقطع>
   <مقطع رقم="٨٦">وَأَمَّا قَوْلُ الْعَرَبِ <قول>رُوَيْدَكَ نَفْسَكَ</قول> فَإِنَّهُمْ يَجْعَلُوْنَ ال‍ـ <حرف>نَّفْسَ</حرف> بِمَنْزِلَةِ <حرف>عَبْدِ اللّٰهِ</حرف> إِذَا أَمَرْتَهُ بِهِ</مقطع>
   <مقطع رقم="٨٧">كَأَنَّكَ قُلْتَ</مقطع>
   <مقطع رقم="٨٨">
      <قول>رُوَيْدَكَ عَبْدَ اللّٰهِ</قول> إِذَا أَرَدْتَ <قول>أَرْوِدْ عَبْدَ اللّٰهِ</قول>
   </مقطع>
   <مقطع رقم="٨٩">وَأَمَّا <حرف>حَيَّهَلَكْ</حرف> وَ <حرف>هاءَكَ</حرف> وَأَخَوَاتُهَا فَلَيْسَ فِيْهَا إِلَّا مَا ذَكَرْنَا لِأَنَّهُنَّ لَمْ<هارون مجلد="١" صفحة="٢٥١"/>يُجْعَلْنَ مَصَادِرَ</مقطع>
   <مقطع رقم="٩٠">وَاعْلَمْ أَنَّ نَاسًا مِنْ الْعَرَبِ يَجْعَلُوْنَ <حرف>هَلُمَّ</حرف> بِمَنْزِلَةِ الْأَمْثِلَةِ الَّتِي أُخِذَتْ مِنَ الْفِعْلِ</مقطع>
   <مقطع رقم="٩١">يَقُوْلُوْنَ <قول>هَلُمَّ</قول> و <قول>هلُمِّي</قول> وَ <قول>هَلُمَّا</قول> وَ <قول>هَلُمُّوا</قول>
   </مقطع>
   <مقطع رقم="٩٢">وَاعْلَمْ أَنَّكَ لَا تَقُوْلُ <قول>دُوْنِي</قول> كَمَا قُلْتَ <قول>عَلَيَّ</قول> لِأَنَّهُ لَيْسَ كُلُّ فِعْلٍ يَجِيءُ بِمَنْزِلَةِ <حرف>أوْلِنِي</حرف>
   </مقطع>
   <مقطع رقم="٩٣">قَدْ تَعَدَّى إِلَى مَفْعُوْلَيْنِ</مقطع>
   <مقطع رقم="٩٤">فَإِنَّمَا <حرف>عَلَيَّ</حرف> بِمَنْزِلَةِ <حرف>أوْلِنِي</حرف> وَ <حرف>دُوْنَكَ</حرف> بِمَنْزِلَةِ <حرف>خُذْ</حرف>
   </مقطع>
   <مقطع رقم="٩٥">لَا تَقُوْلُ <قول>آخِذْنِي دِرْهَمًا</قول> وَلَا <قول>خُذْنِي دِرْهَمًا</قول>
   </مقطع>
   <مقطع رقم="٩٦">وَاعْلَمْ أَنَّهُ لَا يَجُوْزُ لَكَ أَنْ تَقُولَ <قول>عَلَيْهِ زَيْدًا</قول> تُرِيْدُ بِهِ الْأَمْرَ</مقطع>
   <مقطع رقم="٩٧">كَمَا أَرَدْتَ ذٰلِكَ فِي الْفِعْلِ حِيْنَ قُلْتُ <قول>لِيَضْرِبْ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٩٨">لِأَنَّ <حرف>عَلَيْهِ</حرف> لَيْسَ مِنَ الْفِعْلِ</مقطع>
   <مقطع رقم="٩٩">وَكَذٰلِكَ <حرف>حَذَرَهُ زَيْدًا</حرف> قَبِيْحَةٌ لِأَنَّهَا لَيْسَتْ مِنْ أَمْثِلَةِ الْفِعْلِ</مقطع>
   <مقطع رقم="١٠٠">فَإِنَّمَا جَاءَ <قول>تَحْذِيرِي زَيْدًا</قول> لِأَنَّ الْمَصْدَرَ يَتَصَرَّفُ مَعَ الْفِعْلِ فَيَصِيْرُ <قول>حَذَّرَكَ</قول> فِىْ مَوْضِعِ <قول>احْذَرْ</قول> وَ <قول>تَحْذِيرِي</قول> فِىْ مَوْضِعِ <قول>حَذِّرْنِي</قول> فَالْمَصْدَرُ أَبْدًا فِىْ مَوْضِعِ فِعْلِهِ</مقطع>
   <مقطع رقم="١٠١">وَ <قول>دُوْنَكَ</قول> لَمْ يُؤْخَذْ مِنَ فِعْلٍ وَلَا <قول>عِنْدَكَ</قول>
   </مقطع>
   <مقطع رقم="١٠٢">فَإِنَّمَّا يُنْتَهَى فِيْهَا حَيْثُ انْتَهَتِ الْعَرَبُ</مقطع>
   <مقطع رقم="١٠٣">وَاعْلَمْ أَنَّهُ يَقْبُحُ <قول>زَيْدًا عَلَيْكَ</قول> وَ <قول>زَيْدًا حَذَرَكَ</قول>
   </مقطع>
   <مقطع رقم="١٠٤">لِأَنَّهُ لَيْسَ مِنْ أَمْثِلَةِ الْفِعْلِ</مقطع>
   <مقطع رقم="١٠٥">فَقَبُحَ أَنْ يَجْرِيَ مَا لَيْسَ مِنْ الْأَمْثِلَةِ مَجْرَاهَا إِلَّا أَنْ تَقُوْلَ <حرف>زَيْدًا</حرف>
   </مقطع>
   <مقطع رقم="١٠٦">
      <هارون مجلد="١" صفحة="٢٥٢"/>فَتَنْصِبَ بِإِضْمَارَكِ الْفِعْلَ ثُمَّ تَذْكُرُ <حرف>عَلَيْكَ</حرف> بَعْدَ ذٰلِكَ</مقطع>
   <مقطع رقم="١٠٧">فَلَيْسَ يَقْوَى هٰذَا قُوَّةَ الْفِعْلُ لِأَنَّهُ لَيْسَ بِفِعْلٍ وَلَا يَتَصَرَّفُ تَصَرُّفَ الْفَاعِلِ الَّذِىْ فِىْ مَعْنَىً يَفْعَلُ</مقطع>
</باب>
