<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٧"
     درنبورج="١-٢٨"
     هارون="١-٧٣"
     يعقوب="١-١٢٣"
     البكاء="١-١٤٠"
     رقم="٢٣">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابُ الْفَاْعِلَيْنِ وَالْمَفْعُوْلَيْنِ</مقطع>
    <مقطع رقم="٢">اللَّذَيْنِ كَلُّ وَاحِدٍ مِنْهُمَا يَفْعَلُ بِفَاعِلِهِ مِثْلَ الَّذِي يَفْعَلُ بِهِ</مقطع>
    <مقطع رقم="٣">وَمَا كَانَ نَحْوَ ذٰلِكَ</مقطع>
  </عنوان>
  <مقطع رقم="٤">وَهُوَ قَوْلُكَ  <قول>ضَرَبْتُ وَضَرَبَنِي زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="٥">وَ<قول>ضَرَبَنِي وَضَرَبْتُ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٦">تَحْمِلُ الِاسْمَ عَلَى الْفِعْلِ الَّذِي يَلِيْهِ</مقطع>
  <مقطع رقم="٧">فَالْعَامِلُ فِي اللَّفْظِ أَحَدُ الْفِعْلَيْنِ</مقطع>
  <مقطع رقم="٨">وَأَمَّا فِي الْمَعْنَى</مقطع>
  <هارون مجلد="١" صفحة="٧٣"/>
  <مقطع رقم="٩">فَقَدْ يُعْلَمُ أَنَّ الْأَوَّلَ قَدْ وَقَعَ</مقطع>
  <مقطع رقم="١٠">إِلَّا أَنَّهُ لَا يُعْمَلُ فِي اسْمٍ وَاحِدٍ نَصْبٌ وَرَفْعٌ</مقطع>
  <مقطع رقم="١١">وَإِنَّمَا كَانَ الَّذِي يَلِيْهِ أَوْلَى لِقُرْبِ جِوَارِهِ</مقطع>
  <مقطع رقم="١٢">وَأَنَّهُ لَا يَنْقُضُ مَعْنًى</مقطع>
  <مقطع رقم="١٣">وَأَنَّ الْمُخَاطَبَ قَدْ عَرَفَ أَنَّ الْأَوَّلَ قَدْ وَقَعَ بِزَيْدٍ</مقطع>
  <مقطع رقم="١٤">كَمَا كَانَ  <قول>خَشَّنْتُ بِصَدْرِهِ وَصَدْرِ زَيْدٍ</قول> وَجْهَ الْكَلَامِ</مقطع>
  <مقطع رقم="١٥">حَيْثُ كَانَ الْجَرُّ فِي الْأَوَّلِ وَكَانَتِ الْبَاءُ أَقَرَبَ إِلَى الِاسْمِ مِنْ الْفِعْلِ وَلَا تَنْقُضْ مَعْنًى</مقطع>
  <مقطع رقم="١٦">سَوَّوْا بَيْنَهُمَا فِي الْجَرِّ كَمَا يَسْتَوِيَانِ فِي النَّصْبِ</مقطع>
  <مقطع رقم="١٧">وَمِمَّا يُقَوِّي تَرْكَ نَحْوِ هٰذَا لِعِلْمِ الْمُخَاطَبِ</مقطع>
  <مقطع رقم="١٨">قَوْلُهُ عَزَّ وَجَلَّ  <آية>وَالْحَاْفِظِيْنَ فُرُوْجَهُمْ وَالْحَاْفِظَاْتِ وَالذَّاْكِرِيْنَ اللّٰهَ كَثِيْرًا وَالذَّاْكِرَاْتِ</آية>
  </مقطع>
  <مقطع رقم="١٩">فَلَمْ يُعْمِلُ الْآخِرَ فِيْمَا عَمِلَ فِيْهِ الْأَوَّلُ اسْتِغْنَاءً عَنْهُ</مقطع>
  <مقطع رقم="٢٠">وَمِثْلُ ذٰلِكَ  <آية>وَنَخْلَعُ وَنَتْرُكُ مَنْ يَفْجُرُكَ</آية>
  </مقطع>
  <مقطع رقم="٢١">وَجَاءَ فِي الشِّعْرِ مِنَ الِاسْتِغْنَاءِ أَشَدُّ مِنِ هٰذَا</مقطع>
  <مقطع رقم="٢٢">وَذٰلِكَ قَوْلُ قَيْسِ بْنِ الْخَطِيمِ</مقطع>
  <هارون مجلد="١" صفحة="٧٤"/>
  <شاهدة رقم="١" xml:id="٢٣-١">
    <بيت>
      <مصراع>نَحْنُ بِمَا عِنْدَنَا وَأَنْتَ بِمَا</مصراع>
      <مصراع>عِنْدَكَ رَاضٍ وَالرَّأْيُ مُخْتَلِفُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٣">وَقَالَ ضَابِيءُ البُرْجُمِيُّ</مقطع>
  <شاهدة رقم="٢" xml:id="٢٣-٢">
    <بيت>
      <مصراع>فَمَنْ يَكُ أَمْسَى بِالْمَدِيْنَةِ رَحْلُهُ</مصراع>
      <مصراع>فَإِنِّي وَقَيَّارًا بِهَا لَغَرِيْبُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٢٤">وَقَالَ ابْنُ أَحْمَرَ</مقطع>
  <شاهدة رقم="٣" xml:id="٢٣-٣">
    <بيت>
      <مصراع>رَمَانِي بِأَمْرٍ كُنْتُ مِنْهُ وَوالِدِي</مصراع>
      <مصراع>بَرِيْئًا وَمِنْ أَجْلِ الطَّوِيِّ رَمَانِي</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٧٥"/>
  <مقطع رقم="٢٥">فَوَضَعَ فِي مَوْضِعَ الْخَبَرِ لَفْظَ الْوَاحِدِ</مقطع>
  <مقطع رقم="٢٦">لِأَنَّهُ قَدْ عَلِمَ أَنَّ الْمُخَاطَبَ سَيَسْتَدُّلُ بِهِ</مقطع>
  <مقطع رقم="٢٧">عَلَى أَنَّ الْآخَرِيْنَ فِي هَذِهِ الصِّفَةِ</مقطع>
  <مقطع رقم="٢٨">وَالْأَوَّلُ أَجْوَدُ لِأَنَّهُ لَمْ يَضَعْ وَاحِدًا فِي مَوْضِع جَمْعٍ وَلَا جَمْعًا فِي مَوْضِعِ وَاحِدٍ</مقطع>
  <مقطع رقم="٢٩">وَمِثْلُهُ قَوْلُ الْفَرَزْدَقِ</مقطع>
  <شاهدة رقم="٤" xml:id="٢٣-٤">
    <بيت>
      <مصراع>إِنِّي ضَمِنْتُ لِمَنْ أَتَانِي مَا جَنَى</مصراع>
      <مصراع>وَأَبِي فَكَانَ وَكُنْتُ غَيْرَ غَدُورِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٠">تَرَكَ أَنْ يَكُوْنَ لِلْأَوَّلِ خَبَرٌ اِسْتِغْنَاْءً [حِيْنَ اسْتَغْنَى] بِالْآخِرِ</مقطع>
  <مقطع رقم="٣١">لِعِلْمِ الْمُخَاطَبِ أَنَّ الْأَوَّلَ قَدْ دَخَلَ فِي ذٰلِكَ</مقطع>
  <مقطع رقم="٣٢">وَلَوْ لَمْ تَحْمِلْ الْكَلَامَ عَلَى الْآخِرِ</مقطع>
  <مقطع رقم="٣٣">لَقُلْتَ  <قول>ضَرَبْتُ وَضَرَبُوْنِي قَوْمَكَ</قول>
  </مقطع>
  <مقطع رقم="٣٤">وَإِنَّمَا كَلَامُهُمْ  <قول>ضَرَبْتُ وَضَرَبَنِي قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٣٥">وَإِذَا قُلْتَ  <حرف>ضَرَبَنِي</حرف> لَمْ يَكُنْ سَبِيْلٌ لِلأَوَّلِ</مقطع>
  <مقطع رقم="٣٦">لِأَنَّكَ لَا تَقُوْلُ  <حرف>ضَرَبَنِي</حرف> وَأَنْتَ تَجَعْلُ الْمُضْمَرُ جَمِيِعًا</مقطع>
  <مقطع رقم="٣٧">وَلَوْ أَعْمَلْتَ الْأَوَّلَ لَقُلْتَ  <قول>مَرَرْتُ وَمَرَّ بِي بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٣٨">وَإِنَّمَا قَبُحَ هٰذَا أَنَّهُمْ قَدْ جَعَلُوْا الْأَقْرَبَ أَوْلَى إِذَا لَمْ يَنْقُضْ مَعْنًى</مقطع>
  <مقطع رقم="٣٩">قَالَ الشَّاعِرُ وَهُوَ الْفَرَزْدَقُ</مقطع>
  <هارون مجلد="١" صفحة="٧٦"/>
  <شاهدة رقم="٥" xml:id="٢٣-٥">
    <بيت>
      <مصراع>وَلَكِنَّ نِصْفًا لَوْ سَبَبْتُ وسَبَّنِي</مصراع>
      <مصراع>بَنُوْ عَبْدِ شَمْسٍ مِنْ مَنَافٍ وَهَاشِمِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٠">وَقَالَ طُفَيْلٌ الْغَنَوِيُّ</مقطع>
  <شاهدة رقم="٦" xml:id="٢٣-٦">
    <بيت>
      <مصراع>وَكُمْتًا مُدَمَّاةً كَأَنَّ مُتُوْنَهَا</مصراع>
      <مصراع>جَرَى فَوْقَهَا وَاسْتَشْعَرَتْ لَوْنَ مُذْهَبِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤١">وَقَالَ رَجُلٌ مِنْ بَاهِلَةَ</مقطع>
  <شاهدة رقم="٧" xml:id="٢٣-٧">
    <بيت>
      <مصراع>وَلَقَدْ أَرَى تَغْنَى بِهِ سَيْفَانَةٌ</مصراع>
      <مصراع>تُصْبِي الْحَلِيْمَ وَمِثْلُهَا أَصْبَاهُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٢">فَالْفِعْلُ الْأَوَّلُ فِي كُلِّ هٰذَا مُعْمَلٌ فِي الْمَعْنَى وَغَيْرُ مُعْمَلٍ فِي اللَّفْظِ</مقطع>
  <مقطع رقم="٤٣">وَالْآخِرُ مُعْمَلٌ فِي اللَّفْظِ وَالْمَعْنَى</مقطع>
  <هارون مجلد="١" صفحة="٧٧"/>
  <مقطع رقم="٤٤">فَإِنْ قُلْتَ  <قول>ضَرَبْتُ وَضَرَبُوْنِي قَوْمَكَ</قول> نَصَبْتَ</مقطع>
  <مقطع رقم="٤٥">إِلَّا فِي قَوْلِ مَنْ قَالَ  <قول>أَكَلُوْنِي الْبَرَاغِيْثُ</قول>
  </مقطع>
  <مقطع رقم="٤٦">أَوْ تَحْمِلُهُ عَلَى الْبَدَلِ</مقطع>
  <مقطع رقم="٤٧">فَتَجْعَلُهُ بَدَلًا مِنَ الْمُضْمَرِ</مقطع>
  <مقطع رقم="٤٨">كَأَنَّكَ قُلْتَ  <قول>ضَرَبْتُ وَضَرَبَنِي نَاسٌ بَنُوْ فُلَانٍ</قول>
  </مقطع>
  <مقطع رقم="٤٩">وَعَلَى هٰذَا الْحَدِّ تَقُوْلُ  <قول>ضَرَبْتُ وَضَرَبَنِي عَبْد اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٥٠">تُضْمِرُ في  <حرف>ضَرَبَنِي</حرف>
  </مقطع>
  <مقطع رقم="٥١">كَمَا أَضْمَرْتَ في  <حرف>ضَرَبُوْنِي</حرف>
  </مقطع>
  <مقطع رقم="٥٢">فَإِنْ قُلْتَ  <قول>ضَرَبَنِي وَضَرَبْتُهُمْ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٥٣">رَفَعْتَ لِأَنَّكَ شَغَلْتَ الْآخِرَ فَأَضْمَرْتَ فِيْهِ</مقطع>
  <مقطع رقم="٥٤">كَأَنَّكَ قُلْتَ  <قول>ضَرَبَنِي قَوْمُكَ وَضَرَبْتَهُمْ</قول>
  </مقطع>
  <مقطع رقم="٥٥">عَلَى التَّقْدِيْمِ وَالتَّأْخِيْرِ</مقطع>
  <مقطع رقم="٥٦">إِلَّا أَنْ تَجْعَلَ هٰهُنَا الْبَدَلَ كَمَا جَعَلْتَهُ في الرَّفْعِ</مقطع>
  <مقطع رقم="٥٧">فَإِنْ فَعَلْتَ ذٰلِكَ لَمْ يَكُنْ بُدٌّ مِنْ  <حرف>ضَرَبُوْنِي</حرف>
  </مقطع>
  <مقطع رقم="٥٨">لِأَنَّكَ تُضْمِرُ فِيْهِ الْجَمْعَ</مقطع>
  <مقطع رقم="٥٩">قَالَ عُمَرُ بْنُ أَبِي رَبِيْعَةَ</مقطع>
  <شاهدة رقم="٨" xml:id="٢٣-٨">
    <بيت>
      <مصراع>إِذَا هِىَ لَمْ تَسْتَكْ بِعُوْدِ أَرَاكَةٍ</مصراع>
      <مصراع>تُنُخِّلَ فَاسْتَاكَتْ بِهِ عُوْدُ إِسْحِلِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٠">لِأَنَّهُ أَضْمَرَ في آخِرِ الْكَلَامِ</مقطع>
  <مقطع رقم="٦١">وَقَالَ المَرَّارُ الَأَسَدِيُّ</مقطع>
  <شاهدة رقم="٩" xml:id="٢٣-٩">
    <بيت>
      <مصراع>فَرَدَّ عَلَى الْفُؤَادِ هَوًى عَمِيْدًا</مصراع>
      <مصراع>وَسُوْئِلَ لَوْ يُبِيْنُ لَنَا سُؤَالْا</مصراع>
    </بيت>
    <بيت>
      <مصراع>وَقَدْ نَغْنَى بِهَا وَنَرَى عُصُوْرا</مصراع>
      <مصراع>بِهَا يَقْتَدْنَنَا الْخُرُدَ الْخِدَالا</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="٧٨"/>
  <مقطع رقم="٦٢">حَدَّثَنَا بِهِ أَبُوْ الْخَطَّابِ عَنْ شَاعِرِهِ</مقطع>
  <مقطع رقم="٦٣">وَإِذَا قُلْتَ  <قول>ضَرَبُوْنِي وَضَرَبْتُهُمْ قَوْمَكَ</قول>
  </مقطع>
  <مقطع رقم="٦٤">جَعَلْتَ الْقَوْمَ بَدَلَا مِنْ هُمْ</مقطع>
  <مقطع رقم="٦٥">لِأَنَّ الْفِعْلَ لَا بُدَّ لَهُ مِنْ فَاعِلٍ</مقطع>
  <مقطع رقم="٦٦">وَالْفَاعِلُ هٰهُنَا جَمَاعَةٌ وَضَمِيْرُ الْجَمَاعَةِ الْوَاوُ</مقطع>
  <مقطع رقم="٦٧">وَكَذٰلِكَ تَقُوْلُ  <قول>ضَرَبُوْنِي وَضَرَبْتُ قَوْمَكَ</قول>
  </مقطع>
  <مقطع رقم="٦٨">إِذَا أَعْمَلْتَ الْآخِرَ فَلَا بُدَّ في الْأّوَّلِ مِنْ ضَمِيْرِ الْفَاعِلِ لِئَلَّا يَخْلُوَ مِنْ فَاعِلٍ</مقطع>
  <مقطع رقم="٦٩">وَإِنَّمَا قُلْتَ  <قول>ضَرَبْتُ وَضَرَبَنِي قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٧٠">فَلَمْ تَجْعَلْ فِي الْأَوَّلِ الْهَاءَ وَالْمِيْمَ</مقطع>
  <مقطع رقم="٧١">لِأَنَّ الْفِعْلَ قَدْ يَكُوْنُ بِغَيْرِ مَفْعُوْلٍ</مقطع>
  <مقطع رقم="٧٢">وَلَا يَكُوْنُ الْفِعْلُ بِغَيْرِ فَاعِلٍ</مقطع>
  <مقطع رقم="٧٣">وَقَالَ امْرُؤُ الْقَيْسِ</مقطع>
  <شاهدة رقم="١٠" xml:id="٢٣-١٠">
    <بيت>
      <مصراع>فَلَوْ أَنَّ مَا أَسْعَى لَأَدْنَى مَعِيْشَةٍ</مصراع>
      <مصراع>كَفَانِي وَلَمْ أَطْلُبْ قَلِيْلٌ مِنَ الْمَالِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٧٤">فَإِنَّمَا رَفَعَ لِأَنَّهُ لَمْ يَجْعَلْ  <حرف>الْقَلِيْلَ</حرف> مَطْلُوْبًا</مقطع>
  <مقطع رقم="٧٥">وَإِنَّمَا كَانَ الْمَطْلُوْبُ عِنْدَهَ الْمُلْكَ</مقطع>
  <مقطع رقم="٧٦">وَجَعَلَ  <حرف>الْقَلِيْلَ</حرف> كَافِيًا</مقطع>
  <مقطع رقم="٧٧">وَلَوْ لَمْ يُرِدْ ذٰلِكَ وَنَصَبَ فَسَدَ الْمَعْنَى</مقطع>
  <مقطع رقم="٧٨">وَقَدْ يَجُوْزُ  <قول>ضَرَبْتُ وَضَرَبَنِي زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="٧٩">لِأَنَّ بَعْضَهُمْ قَدْ يَقُوْلُ  <قول>مَتَى رَأَيْتَ [أَوْ قُلْتَ] زَيْدًا مُنْطَلِقًا</قول>
  </مقطع>
  <مقطع رقم="٨٠">وَالْوَجْهُ  <قول>مَتَى رَأَيْتَ أَوْ قُلْتَ زَيْدٌ مُنْطَلِقٌ</قول>
  </مقطع>
  <مقطع رقم="٨١">وَمِثْلُ ذٰلِكَ في الْجَوَازِ  <قول>ضَرَبَنِي وَضَرَبْتُ قَوْمُكَ</قول>
  </مقطع>
  <مقطع رقم="٨٢">وَالْوَجْهُ أَنْ تَقُوْلَ  <قول>ضَرَبُوْنِي وَضَرَبْتُ قَوْمَكَ</قول>
  </مقطع>
  <مقطع رقم="٨٣">فَتَحْمِلَهُ عَلَى الْآخِرِ</مقطع>
  <مقطع رقم="٨٤">فَإِنْ قُلْتَ  <قول>ضَرَبَنِي وَضَرَبْتُ قَوْمَكَ</قول>
  </مقطع>
  <هارون مجلد="١" صفحة="٧٩"/>
  <مقطع رقم="٨٥">فَجَائِزٌ وَهُوَ قَبِيْحٌ أَنْ تَجْعَلَ اللَّفْظَ كَالْوَاحِدِ</مقطع>
  <مقطع رقم="٨٦">كَمَا تَقُوْلُ  <قول>هُوَ أَحْسَنُ الْفِتْيَانِ وَأَجْمَلُهُ وَأَكْرَمُ بَنِيْهِ وأَنْبَلُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٧">وَلَا بُدَّ مِنْ هٰذَا لِأَنَّهُ لَا يَخْلُو الْفَعَلُ مِنْ مُضْمَرٍ أَوْ مُظْهَرٍ مَرْفُوْعٍ مِنْ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="٨٨">كَأَنَّكَ قُلْتَ إِذَا مَثَّلْتَهُ  <قول>ضَرَبَنِي مَنْ ثَمَّ وَضَرَبْتُ قَوْمَكَ</قول>
  </مقطع>
  <مقطع رقم="٨٩">وَتَرْكُ ذٰلِكَ أَجْوَدُ وَأَحْسَنُ لِلتِّبْيَانِ الَّذِي يَجِيْءُ بَعْدَهُ</مقطع>
  <مقطع رقم="٩٠">فَأُضْمِرَ  <حرف>مَنْ</حرف> لِذٰلِكَ</مقطع>
  <مقطع رقم="٩١">[قَالَ الْأَخْفَشُ] فَهٰذَا رَدِيْءٌ فِي الْقِيَاسِ</مقطع>
  <مقطع رقم="٩٢">يَدْخُلُ عَلَيْهِ [فِيْهِ] أَنْ تَقُوْلَ  <قول>أَصْحَابُكَ جَلَسَ</قول>
  </مقطع>
  <مقطع رقم="٩٣">تُضْمِرُ شَيْئًا يَكُوْنُ في اللَّفْظِ وَاحِدً</مقطع>
  <مقطع رقم="٩٤">فَقَوْلُهُمْ  <قول>هُوَ أَظْرَفُ الْفِتْيَانِ وَأَجْمَلُهُ</قول>
  </مقطع>
  <مقطع رقم="٩٥">لَا يُقَاسُ عَلَيْهِ</مقطع>
  <مقطع رقم="٩٦">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ وَأَنْتَ تُرِيْدُ الْجَمَاعَةَ  <قول>هٰذَا غُلَامُ الْقَوْمِ وَصَاحِبُهُ</قول> لَمْ يَحْسُنْ</مقطع>
</باب>
