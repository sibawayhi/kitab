<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="٣٨">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ جَرَى مَجْرَى الْفَاعِلِ</مقطع>
    <مقطع رقم="٢">الَّذِي يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُوْلَيْنِ</مقطع>
    <مقطع رقم="٣">في اللَّفْظِ لَا فِي الْمَعْنَىْ</مقطع>
  </عنوان>
  <مقطع رقم="٤">وَذٰلِكَ قَوْلُكَ</مقطع>
  <شاهدة رقم="١" xml:id="٣٨-١">
    <بيت>
      <مصراع>يَا سَارِقَ اللَّيْلَةِ أَهْلَ الدَّارْ</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="١٧٥"/>
  <مقطع رقم="٥">وَ تَقُوْلُ عَلَى هٰذَا الْحَدِّ</مقطع>
  <مقطع رقم="٦">
    <قول>سَرَقْتُ اللَّيْلَةَ أَهْلَ الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٧">فَتُجْرِي  <حرف>اللَّيْلَةَ</حرف> عَلَى الْفِعْلِ في سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٨">كَمَا قَالَ  <قول>صِيْدَ عَلَيْهِ يَوْمَانِ</قول>
  </مقطع>
  <مقطع رقم="٩">وَ<قول>وُلِدَ لَهُ سِتُّوْنَ عَامًا</قول>
  </مقطع>
  <مقطع رقم="١٠">فَالَلَّفْظُ يَجْرِي عَلَى قَوْلِهِ  <قول>هٰذَا مُعْطِي زَيْدٍ دِرْهَمًا</قول>
  </مقطع>
  <مقطع رقم="١١">وَالْمَعْنَى إِنَّمَا هُوَ<حرف>في اللَّيْلَةِ</حرف> وَ<حرف>صِيْدَ عَلَيْهِ في الْيَوْمَيْنِ</حرف>
  </مقطع>
  <مقطع رقم="١٢">غَيْرَ أَنَّهُمْ أَوْقَعُوْا الْفِعْلَ عَلَيْهِ لِسَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="١٣">وَكَذٰلِكَ لَوْ قُلْتَ  <قول>هٰذَا مُخْرَجُ الْيَوْمِ الدِّرْهَمَ</قول>
  </مقطع>
  <مقطع رقم="١٤">وَ<قول>صَائِدُ الْيَوْمِ الْوَحْشَ</قول>
  </مقطع>
  <مقطع رقم="١٥">وَمَثْلُ مَا أُجْرِيَ مُجْرَى هٰذَا في سَعَةِ الْكَلَامِ وَالاسْتِخْفَافِ</مقطع>
  <مقطع رقم="١٦">قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="١٧">
    <آية>بَلْ مَكْرُ الْلَّيْلِ وَالْنَّهَارِ</آية>
  </مقطع>
  <مقطع رقم="١٨">فَاللَّيْلُ وَالنَّهَارُ لَا يَمْكُرَانِ وَلَكِنَّ الْمُكْرَ فِيْهِمَا</مقطع>
  <مقطع رقم="١٩">فَإِنْ نَوَّنْتَ فَقُلْتُ  <قول>يَا سَارِقَِا اللَّيْلَةَ أَهْلَ الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٢٠">كَانَ حَدُّ الْكَلَامَ أَنْ يَكُوْنَ  <حرف>أَهْلُ الدَّارِ</حرف> عَلَى  <حرف>سَارِقٍ</حرف> مَنْصُوبًا</مقطع>
  <مقطع رقم="٢١">وَيَكُوْنَ  <حرف>اللَّيْلَةُ</حرف> ظَرْفًا</مقطع>
  <مقطع رقم="٢٢">لِأَنَّ هٰذَا مَوْضِعُ انْفِصَالٍ</مقطع>
  <مقطع رقم="٢٣">وَإِنْ شِئْتَ أَجْرَيْتَهُ عَلَى الْفِعْلِ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٢٤">وَلَا يَجُوْزُ  <قول>يَا سَارِقَ اللَّيْلَةِ أَهْلِ الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٢٥">إِلَّا في شِعْرٍ</مقطع>
  <مقطع رقم="٢٦">كَرَاهِيَةَ أَنْ يَفْصِلُوا <هارون مجلد="١" صفحة="١٧٦"/>
  </مقطع>
  <مقطع رقم="٢٧">بَيْنَ الْجَارُّ وَالْمَجْرُوْرُ</مقطع>
  <مقطع رقم="٢٨">فَإِذَا كَانَ مُنَوَّنًا</مقطع>
  <مقطع رقم="٢٩">فَهُوَ بِمَنْزِلَةِ الْفِعْلِ النَّاصِبِ</مقطع>
  <مقطع رقم="٣٠">تَكُوْنُ الْأَسْمَاءُ فِيْهِ مُنْفَصِلَةٌ</مقطع>
  <مقطع رقم="٣١">قَالَ الشَّاعِرُ وَهُوَ الشَّمَّاخِ</مقطع>
  <شاهدة رقم="٢" xml:id="٣٨-٢">
    <بيت>
      <مصراع>رُبَّ ابْنِ عَمَّ لِسُلَيْمَى مُشْمُعّلَ</مصراع>
      <مصراع>طَبَّاخِ سَاعَاتِ الْكَرَى زَادَ الْكَسِلْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٢">هٰذَا عَلَى  <قول>يَا سَارِقَ اللَّيْلَةِ أَهْلَ الدَّارِ</قول>
  </مقطع>
  <مقطع رقم="٣٣">وَقَالَ الْأَخْطَلُ</مقطع>
  <شاهدة رقم="٣" xml:id="٣٨-٣">
    <بيت>
      <مصراع>وَكَرَّارِ خَلْفِ الْمُجْحَرِينَ جَوَادُهُ</مصراع>
      <مصراع>إِذَا لَمْ يْحَامِ دُوْنَ أُنْثَىْ حَلِيْلَها</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٤">فَإِنْ قُلْتَ  <حرف>كَرَّارٍ</حرف> وَ<حرف>طَبّاخٍ</حرف>
  </مقطع>
  <مقطع رقم="٣٥">صَارَ بِمَنْزِلَةِ  <حرف>طَبَخْتُ</حرف> وَ<حرف>كَرَّرْتُ</حرف>
  </مقطع>
  <مقطع رقم="٣٦">تُجْرِيْهَا مَجْرَى السَّارِقِ</مقطع>
  <مقطع رقم="٣٧">حِيْنَ نَوَّنْتَ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <هارون مجلد="١" صفحة="١٧٧"/>
  <مقطع رقم="٣٨">وَقَالَ رَجُلٌ مِنْ بَنِىٓ عَامِرٍ</مقطع>
  <شاهدة رقم="٤" xml:id="٣٨-٤">
    <بيت>
      <مصراع>وَيَوْمٍ شَهِدْنَاهُ سُلَيْمَا وَعَامِرَا</مصراع>
      <مصراع>قَلِيْلٍ سِوَىَ الْطَّعْنِ النْهَالَ نَوَافِلُهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٩">وَكَمَا قَالَ  <قول>ثَمَانِي حِجَجٍ حَجَجَتِهُنَ بَيْتِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٤٠">وَمِمَّا جَاءَ في الشِّعْرِ قَدْ فُصِّلَ بَيْنَهُ وَبَيْنَ الْمَجْرُوْرِ</مقطع>
  <مقطع رقم="٤١">قَوْلَ عَمْرِوٍ بْنِ قَمِيْئَةَ</مقطع>
  <شاهدة رقم="٥" xml:id="٣٨-٥">
    <بيت>
      <مصراع>لَّمَّا رَأَتْ سَاتِيْدَمَا اسْتَعْبَرَتْ</مصراع>
      <مصراع>لِلَّهِ دَرُّ الْيَوْمَ مَنْ لَامَهَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٢">وَقَالَ أَبُوْ حَيَّةَ الْنُّمَيْرِىُّ</مقطع>
  <هارون مجلد="١" صفحة="١٧٨"/>
  <شاهدة رقم="٦" xml:id="٣٨-٦">
    <بيت>
      <مصراع>كَمَا خُطَّ الْكِتَابُ بِكُفَّ يَوْمَا</مصراع>
      <مصراع>يَهُوِدِىيُقَارَبُ أَوْ يُزَيِّلُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٣">وَهٰذَا لَا يَكُوْنُ فِيْهِ إِلَّا هٰذَا</مقطع>
  <مقطع رقم="٤٤">لِأَنَّهُ لَيْسَ في مَعْنَى فِعْلٍ وَلَا اسْمِ الْفَاعِلِ</مقطع>
  <مقطع رقم="٤٥">الَّذِىْ جَرَىْ مَجْرَى الْفِعْلِ</مقطع>
  <مقطع رقم="٤٦">وَمِمَّا جَاءَ مَفْصُولًا بَيْنَهُ وَبَيْنَ الْمَجْرُوْرِ</مقطع>
  <مقطع رقم="٤٧">قُوَّلُ الْأَعْشَى</مقطع>
  <شاهدة رقم="٧" xml:id="٣٨-٧">
    <بيت>
      <مصراع>وَلَا نُقَاتِلُ بِالعَصّىْ</مصراع>
      <مصراع>وَلَا نُرِامِي بِالْحِجَارَهْ</مصراع>
    </بيت>
    <بيت>
      <مصراع>إِلَا عُلَالَةَ أَوْ بُدَاهَةَ قَارِحٍ نَهْدِ الْجُزَارَهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٤٨">وَقَالَ ذُوْ الْرُّمَّةِ</مقطع>
  <شاهدة رقم="٨" xml:id="٣٨-٨">
    <بيت>
      <مصراع>كَأَنَّ أَصْوَاتَ مِنْ إِيَّغَالِهِنَّ بِنَا</مصراع>
      <مصراع>أَوَاخِرِ الْمَيْسِ أَصْوَاتُ الْفِرَارِيّجَ</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="١٧٩"/>
  <مقطع رقم="٤٩">فَهٰذَا قَبِيْحٌ</مقطع>
  <مقطع رقم="٥٠">وَيَجُوْزُ في الشِّعْرِ عَلَى هٰذَا  <قول>مَرَرْتُ بِخَيْرِ وَأَفَضَلِ مَنْ ثَمَّ</قول>
  </مقطع>
  <مقطع رقم="٥١">وَقَالَتْ دَّرْنا بِنْتِ عَبعْبةً مِنْ بَنِيَّ قَيْسِ بْنِ ثَعْلَبَةَ</مقطع>
  <شاهدة رقم="٩" xml:id="٣٨-٩">
    <بيت>
      <مصراع>هُمَا أَخَوَا في الْحَرْبِ مَنْ لَا أَخَا لَهُ</مصراع>
      <مصراع>إِذَا خَافَ يَوْمَا نَبْوَةً فَدَعَاهُمَا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٢">وَقَالَ الْفَرَزْدَقُ</مقطع>
  <شاهدة رقم="١٠" xml:id="٣٨-١٠">
    <بيت>
      <مصراع>يَا مَنْ رَأَىَ عَارِضَا أُسِرَبِهُ</مصراع>
      <مصراع>بَيْنَ ذِرَاعَىْ وَجَبْهةٍ الْأَسَدِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٥٣">وَأَمَّا قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
  <مقطع رقم="٥٤">
    <آية>فَبِمَا نَقْضِهِمْ مِّيْثَاقَهُمْ</آية>
  </مقطع>
  <مقطع رقم="٥٥">فَإِنَّمَا جَاءَ لِأَنَّهُ لَيْسَ <هارون مجلد="١" صفحة="١٨٠"/>لِ مَا مَعْنَىً</مقطع>
  <مقطع رقم="٥٦">سِوَىْ مَا كَانَ قَبْلَ أَنْ تَجِئَ</مقطع>
  <مقطع رقم="٥٧">إِلَّا التَّوْكِيدُ فَمِنْ ثَمَّ جَازَ ذٰلِكَ</مقطع>
  <مقطع رقم="٥٨">إِذْ لَمْ تُرِدْ بِهِ أَكْثَرَ مِنْ هٰذَا</مقطع>
  <مقطع رقم="٥٩">وَكَانَا حَرْفَيْنِ أَحَدُهُمَا في الْآخَرِ عَامِلٌ</مقطع>
  <مقطع رقم="٦٠">وَلَوْ كَانَ اسْمًا أَوْ ظَرْفًا أَوْ فِعْلًا لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٦١">وَأَمَّا قَوْلُهُ  <قول>أُدْخِلَ فُوَهُ الْحَجَرَ</قول>
  </مقطع>
  <مقطع رقم="٦٢">فَهٰذَا جَرَىْ عَلَى سَعَةِ الْكَلَامِ</مقطع>
  <مقطع رقم="٦٣">وَالْجَيِّدُ  <قول>أُدْخِلَ فَاهُ الْحِجْرُ</قول>
  </مقطع>
  <مقطع رقم="٦٤">كَمَا قَالَ  <قول>أَدْخَلْتُ في رَأْسِي الْقَلَنْسُوَةَ</قول>
  </مقطع>
  <مقطع رقم="٦٥">وَالْجَيِّدُ  <قول>أَدْخَلْتُ في الْقَلَنْسُوَةٌ رَأْسِي</قول>
  </مقطع>
  <مقطع رقم="٦٦">وَلَيْسَ مِثْلَ الْيَوْمِ وَاللَّيْلَةِ لِأَنَّهُمَا ظَرْفَانِ</مقطع>
  <مقطع رقم="٦٧">فَهُوَ مُخَالِفٌ لَهُ في هٰذَا مُوَافِقٌ لَهُ في السَّعَةِ</مقطع>
  <مقطع رقم="٦٨">قَالَ الْشَّاعِرُ</مقطع>
  <شاهدة رقم="١١" xml:id="٣٨-١١">
    <بيت>
      <مصراع>تَرَىَ الثَّوْرَ فِيْهَا مُدْخِلَ الْظِّلِّ رَأْسَهُ</مصراع>
      <مصراع>وَسَائِرُهُ بَادٍ إِلَى الْشَّمْسِ أَجْمَعُ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٦٩">فَوَجَّهَ الْكَلَامَ فِيْهِ هٰذَا كَرَاهِيَةَ الِانْفِصَالَ</مقطع>
  <مقطع رقم="٧٠">وَإِذَا لَمْ يَكُنْ في الْجَرِّ</مقطع>
  <مقطع رقم="٧١">فَحَدُّ الْكَلَامِ أَنْ يَكُوْنَ النَّاصِبُ مَبْدُوْءًا بِهِ</مقطع>
</باب>
