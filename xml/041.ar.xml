<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٩٩"
     درنبورج="١-٨١"
     هارون="١-١٩٤"
     يعقوب="١-٢٥٦"
     البكاء="١-٢٦٨"
     رقم="٤١">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ الصِّفَةِ الْمُشَبَّهَةِ بِالْفَاْعِلِ</مقطع>
       <مقطع رقم="٢">فِيْمَا عَمِلَتْ فِيْهِ</مقطع>
       <مختصر>هٰذَا بَاْبُ الصِّفَةِ الْمُشَبَّهَةِ بِالْفَاعِلِ</مختصر>
   </عنوان>
    <مقطع رقم="٣">وَلَمْ تَقْوَ أَنْ تَعْمَلَ عَمَلَ الْفَاعِلِ</مقطع>
    <مقطع رقم="٤">لِأَنَّهَا لَيْسَتْ في مَعْنَى الْفِعْلِ الْمُضَارِعِ</مقطع>
    <مقطع رقم="٥">فَإِنَّمَا شُبِّهَتْ بِالْفَاعِلِ فِيْمَا عَمَلِتْ فِيْهِ</مقطع>
    <مقطع رقم="٦">وَمَا تَعْمَلُ فِيْهِ مَعْلُوْمٌ</مقطع>
    <مقطع رقم="٧">إِنَّمَا تَعْمَلُ فِيْمَا كَانَ مِنْ سَبَبِهَا</مقطع>
    <مقطع رقم="٨">مُعَرَّفًا بِالْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="٩">أَوْ نَكِرَةً</مقطع>
    <مقطع رقم="١٠">لَا تُجَاوِزُ هٰذَا</مقطع>
    <مقطع رقم="١١">لِأَنَّهُ لَيْسَ بِفِعْلٍ</مقطع>
    <مقطع رقم="١٢">وَلَا اسْمٍ هُوَ في مَعْنَاهُ</مقطع>
    <مقطع رقم="١٣">وَالْإِضَافَةُ فِيْهِ أَحْسَنُ وَأَكْثَرُ</مقطع>
    <مقطع رقم="١٤">لِأَنَّهُ لَيْسَ كَمَا جَرَى مَجْرَى الْفِعْلِ</مقطع>
    <مقطع رقم="١٥">وَلَا في مَعْنَاهُ</مقطع>
    <مقطع رقم="١٦">فَكَانَ هٰذَا أَحْسَنَ عِنْدَهُمْ</مقطع>
    <مقطع رقم="١٧">أَنْ يَتَبَاعَدَ مِنْهُ في اللَّفْظِ</مقطع>
    <مقطع رقم="١٨">كَمَا أَنَّهُ لَيْسَ مِثْلَهُ في الْمَعْنَى</مقطع>
    <مقطع رقم="١٩">وَفِي قُوَّتِهِ في الْأَشْيَاءِ</مقطع>
    <مقطع رقم="٢٠">وَالتَّنْوِيْنُ عَرَبِىٌّ جَيِّدٌ</مقطع>
    <مقطع رقم="٢١">وَمَعَ هٰذَا أَنَّهُمْ</مقطع>
    <هارون مجلد="١" صفحة="١٩٤"/>
    <مقطع رقم="٢٢">لَوْ تَرَكُوا التَّنْوِينَ أَوِ النُّوْنَ</مقطع>
    <مقطع رقم="٢٣">لَمْ يَكُنْ أَبَدًا</مقطع>
    <مقطع رقم="٢٤">إِلَّا نَكِرَةً عَلَى حَالِهِ مِنَوَّنًا</مقطع>
    <مقطع رقم="٢٥">فَلَمَّا كَانَ تَرْكُ التَّنْوِيْنِ فِيْهِ وَالْنُّوْنُ</مقطع>
    <مقطع رقم="٢٦">لَا يُجَاوَزُ بِهِ مَعْنَى النُّوْنِ وَالتَّنْوْيِنِ</مقطع>
    <مقطع رقم="٢٧">كَانَ تَرْكُهُمَا أَخَفَّ عَلَيْهِمْ</مقطع>
    <مقطع رقم="٢٨">فَهٰذَا يُقَوِّى أَنَّ الْإِضَافَةَ</مقطع>
    <مقطع رقم="٢٩">أَحْسَنُ مَعَ التَّفْسِيْرِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٣٠">فَالْمُضَافُ قَوْلُكَ</مقطع>
    <مقطع رقم="٣١">
       <قول>هٰذَا حَسَنُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٣٢">وَ<قول>هَذِهِ حَسَنَةُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٣٣">فَالصِّفَةُ تَقَعُ عَلَى الِاسْمِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٣٤">ثُمَّ تُوْصِلُهُا إِلَى  <حرف>الْوَجْهِ</حرف>
   </مقطع>
    <مقطع رقم="٣٥">وَإِلَى كُلِّ شَيءٍ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٣٦">عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع رقم="٣٧">كَمَا تَقُوْلُ</مقطع>
    <مقطع رقم="٣٨">
       <قول>هٰذَا ضَارِبُ الرَّجُلِ</قول>
   </مقطع>
    <مقطع رقم="٣٩">وَ<قول>هَذِهِ ضَارِبَةُ الرَّجُلِ</قول>
   </مقطع>
    <مقطع رقم="٤٠">إِلَّا أَنَّ الْحُسْنَ في الْمَعْنَى لِلْوَجْهِ</مقطع>
    <مقطع رقم="٤١">وَالضَّرْبُ هٰهُنَا لِلْأَوَّلِ</مقطع>
    <مقطع رقم="٤٢">وَمِنْ ذٰلِكَ قَوْلُهُمْ</مقطع>
    <مقطع رقم="٤٣">
       <قول>هُوَ أَحْمَرُ بَيْنِ الْعَيْنَيْنِ</قول>
   </مقطع>
    <مقطع رقم="٤٤">وَ<قول>هُوَ جَيِّدُ وَجْهِ الْدَارُ</قول>
   </مقطع>
    <مقطع رقم="٤٥">وَمِمَّا جَاءَ مُنَّوْنَا قَوْلُ <شاعر>زُهَيْرٍ</شاعر>
   </مقطع>
    <شاهدة رقم="١" xml:id="٤١-١">
       <بيت>
          <مصراع>أَهْوَى لَهَا أَسْفَعُ الْخَدَّيْنِ <شاهدة>مُطَّرِقٌ</شاهدة></مصراع>
          <مصراع><شاهدة>رِيْشَ</شاهدة> الْقَوَادِمِ لَمْ تُنْصَبْ لَهُ الْشَّبَكُ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="١٩٥"/>
    <مقطع رقم="٤٦">وَقَالَ <شاعر>الْعَجَّاجُ</شاعر>
   </مقطع>
    <شاهدة رقم="٢" xml:id="٤١-٢">
       <بيت>
          <مصراع>مُحْتَبكٌِ <شاهدة>ضَخْمٌ شُئُونَ</شاهدة> الْرَّأْسِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٧">وَقَالَ أَيْضًا <شاعر>النَّابِغَةِ</شاعر>
   </مقطع>
    <شاهدة رقم="٣" xml:id="٤١-٣">
       <بيت>
          <مصراع>وَنَأْخُذْ بَعْدَهُ بِذِنَابِ عَيْشٍ</مصراع>
          <مصراع><شاهدة>أَجبَّ الظَّهْرَ</شاهدة> لَيْسَ لَهُ سَنَامُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤٨">وَهُوَ في الشِّعْرِ كَثِيْرٌ</مقطع>
    <مقطع رقم="٤٩">وَاعْلَمْ أَنَّ كَيْنُوْنَةَ الْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="٥٠">في الِاسْمِ الْآخِرِ</مقطع>
    <مقطع رقم="٥١">أَكْثَرُ وَأَحْسَنُ</مقطع>
    <مقطع رقم="٥٢">مِنْ أَنْ لَا تَكُوْنَ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
    <مقطع رقم="٥٣">لِأَنَّ الْأَوَّلَ في الْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="٥٤">وَفي غَيْرِهِمَا</مقطع>
    <مقطع رقم="٥٥">هٰهُنَا عَلَى حَالَةٍ وَاحِدَةٍ</مقطع>
    <مقطع رقم="٥٦">وَلَيْسَ كَالْفَاعِلِ</مقطع>
    <مقطع رقم="٥٧">فَكَانَ إِدْخَالُهُمَا أَحْسَنَ وَأَكْثَرَ</مقطع>
    <مقطع رقم="٥٨">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ أَكْثَرَ</مقطع>
    <مقطع رقم="٥٩">وَكَانَ الْأَلِفُ وَاللَّامُ أَوْلَى</مقطع>
    <مقطع رقم="٦٠">لِأَنَّ مَعْنَاهُ  <حرف>حَسَنٌ وَجْهُهُ</حرف>
   </مقطع>
    <مقطع رقم="٦١">فَكَمَا لَا يَكُوْنُ <هارون مجلد="١" صفحة="١٩٦"/>هٰذَا إِلَّا مَعْرِفَةً</مقطع>
    <مقطع رقم="٦٢">اِخْتَارُوْا في ذٰلِكَ الْمَعْرِفَةَ</مقطع>
    <مقطع رقم="٦٣">وَالْأُخْرَى عَرَبِيَّةٌ</مقطع>
    <مقطع رقم="٦٤">كَمَا أَنَّ التَّنْوِينَ وَالنُّوْنَ عَرَبِىٌّ مُطَّرِدٌ</مقطع>
    <مقطع رقم="٦٥">فَمِنْ ذٰلِكَ قَوْلُهُ</مقطع>
    <مقطع رقم="٦٦">
       <قول>هُوَ حَدِيْثُ عَهْدٍ بِالْوَجَعِ</قول>
   </مقطع>
    <مقطع رقم="٦٧">وَقَالَ عَمْرُوْ بْنُ شَأْسٍ</مقطع>
    <شاهدة رقم="٤" xml:id="٤١-٤">
       <بيت>
          <مصراع>أَلِكْنِي إِلَى قَوْمِي الْسَّلامَ رِسَالَةً</مصراع>
          <مصراع>بِآيَةِ مَا كَانُوْا ضِعَافًا وَلَا عُزْلَا</مصراع>
      </بيت>
       <بيت>
          <مصراع>وَلَا <شاهدة>سَيِّئِي زِيٍّ</شاهدة> إِذَا مَا تَلَبَّسُوا</مصراع>
          <مصراع>إِلَى حَاجَةٍ يَوْمَا مُخَيَّسَةً بُزْلَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٦٨">وَقَالَ حُمَيْدٌ الْأَرْقَطُ</مقطع>
    <شاهدة رقم="٥" xml:id="٤١-٥">
       <بيت>
          <مصراع><شاهدة>لَاحِقُ بَطْنِ</شاهدة> بِقَرًا سَمِيّنِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="١٩٧"/>
    <مقطع رقم="٦٩">وَمِمَّا جَاءَ مِنَوَّنًا</مقطع>
    <مقطع رقم="٧٠">قَوْلُ أَبِي زُبَيْدٍ يَصِفُ الْأَسَدَ</مقطع>
    <شاهدة رقم="٦" xml:id="٤١-٦">
       <بيت>
          <مصراع>كَأَنَّ أَثْوَابَ نَقّادٍ قُدِرْنَ لَهُ</مصراع>
          <مصراع>يَعْلُو بِخَمْلَتِها <شاهدة>كَهْبَاءَ هُدَّابَا</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧١">وَقَالَ أَيْضًا</مقطع>
    <شاهدة رقم="٧" xml:id="٤١-٧">
       <بيت>
          <مصراع>هَيْفَاءُ مُقْبِلَةً عَجْزَاءُ مُدْبِرَةً</مصراع>
          <مصراع>مَحْطُوطَةٌ جُدِلَتْ <ساهدة>شَنْبَاءُ أَنْيَابَا</ساهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٧٢">وَقَالَ عَدِىِّ بْنِ زَيْدِ</مقطع>
    <شاهدة رقم="٨" xml:id="٤١-٨">
       <بيت>
          <مصراع>مِنْ حَبِيْبٍ أَوْ أَخِي ثِقَةٍ</مصراع>
          <مصراع>أَوْ عَدُوٍّ <شاهدة>شَاحِطٍ دَارَا</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="١٩٨"/>
    <مقطع رقم="٧٣">وَقَدْ جَاءَ في الشِّعْرِ</مقطع>
    <مقطع رقم="٧٤">
       <قول>حَسَنَةُ وَجْهِهَا</قول>
   </مقطع>
    <مقطع رقم="٧٥">شَبَّهُوْهُ بِـ<قول>حَسَنَةِ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٧٦">وَذٰلِكَ رَدِيءٌ</مقطع>
    <مقطع رقم="٧٧">لِأَنَّهُ بِالْهَاءِ مَعْرِفَةٌ</مقطع>
    <مقطع رقم="٧٨">كَمَا كَانَ بِالْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="٧٩">وَهُوَ مِنْ سَبَبِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٨٠">كَمَا أَنَّهُ مِن سَبَبِهِ بِالْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="٨١">قَالَ الشَّمَّاخِ</مقطع>
    <شاهدة رقم="٩" xml:id="٤١-٩">
       <بيت>
          <مصراع>أَمِنْ دِمْنَتَيْنِ عَرَّسَ الْرَّكْبُ فِيْهِمَا</مصراع>
          <مصراع>بِحَقْلِ الرُّخَامَى قَدْ عَفَا طَلَلاهُما</مصراع>
      </بيت>
       <بيت>
          <مصراع>أَقَامَتْ عَلَى رَبْعَيْهِمَا <شاهدة>جَارَتَا صَفّا</شاهدة></مصراع>
          <مصراع>كُمَيْتَا الْأَعَالِىَ <شاهدة>جَوْنَتَا مُصْطَلاهُمَا</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٨٢">وَاعْلَمْ أَنَّهُ لَيْسَ في الْعَرَبِيَّةِ</مقطع>
    <مقطع رقم="٨٣">مُضَافٌ يَدْخُلُ عَلَيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
    <مقطع رقم="٨٤">غَيْرُ الْمُضَافِ <هارون مجلد="١" صفحة="١٩٩"/>إِلَى الْمَعْرِفَةِ في هٰذَا الْبَابِ</مقطع>
    <مقطع رقم="٨٥">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٨٦">
       <قول>هٰذَا الْحَسَنُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="٨٧">أَدْخَلُوْا الْأَلِفَ وَالْلَّامَ</مقطع>
    <مقطع رقم="٨٨">عَلَى  <حرف>حَسَنِ الْوَجْهِ</حرف>
   </مقطع>
    <مقطع رقم="٨٩">لِأَنَّهُ مُضَافٌ إِلَى مَعْرِفَةٍ</مقطع>
    <مقطع رقم="٩٠">لَا يُكُونُ بِهَا مَعْرِفَةً أَبَدًا</مقطع>
    <مقطع رقم="٩١">فَاحْتَاجَ إِلَى ذٰلِكَ</مقطع>
    <مقطع رقم="٩٢">حَيْثُ مُنِعَ مَا يَكُوْنُ في مِثْلِهِ الْبَتَّةَ</مقطع>
    <مقطع رقم="٩٣">وَلَا يُجَاوَزُ بِهِ مَعْنَى التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٩٤">فَأَمَّا النَّكِرَةُ</مقطع>
    <مقطع رقم="٩٥">فَلَا يَكُوْنُ فِيْهَا</مقطع>
    <مقطع رقم="٩٦">إِلَّا  <حرف>الْحَسَنُ وَجْهًا</حرف>
   </مقطع>
    <مقطع رقم="٩٧">تَكُوْنُ الْأَلِفُ وَاللَّامُ</مقطع>
    <مقطع رقم="٩٨">بَدَلًا مِنَ التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٩٩">لِأَنَّكَ لَوْ قُلْتَ <قول>حَدِيْثُ عَهْدٍ</قول>
   </مقطع>
    <مقطع رقم="١٠٠">أَوْ <قول>كَرِيْمُ أَبٍ</قول>
   </مقطع>
    <مقطع رقم="١٠١">لَمْ تُخْلِلْ بِالْأَوَّلِ في شَيءٍ</مقطع>
    <مقطع رقم="١٠٢">فَتَحْتَمِلَ لَهُ الْأَلِفَ وَاللَّامَ</مقطع>
    <مقطع رقم="١٠٣">لِأَنَّهُ عَلَى مَا يَنْبَغِي أَنْ يَكُوْنَ عَلَيْهِ</مقطع>
    <مقطع رقم="١٠٤">قَالَ رُؤْبَةُ</مقطع>
    <شاهدة رقم="١٠" xml:id="٤١-١٠">
       <بيت>
          <مصراع><شاهدة>الْحَزْنُ بَابًا</شاهدة> وَ<شاهدة>الْعُقُوْرُ كَلْبًا</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٢٠٠"/>
    <مقطع رقم="١٠٥">وَزَعَمَ أَبُوْ الْخَطَّابِ</مقطع>
    <مقطع رقم="١٠٦">أَنَّهُ سَمِعَ قَوْمًا مِنْ الْعَرَبِ</مقطع>
    <مقطع رقم="١٠٧">يُنْشِدُوْنَ هٰذَا الْبَيْتَ</مقطع>
    <مقطع رقم="١٠٨">لِلْحَارِثِ ابْنِ ظَالِمٍ</مقطع>
    <شاهدة رقم="١١" xml:id="٤١-١١">
       <بيت>
          <مصراع>فَمَا قَوْمِىَ بِثَعْلَبَةَ بْنِ سَعْدٍ</مصراع>
          <مصراع>وَلَا بِفَزَارَةَ <شاهدة>الْشُّعْرَى رِقَابَا</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٠٩">فَإِنَّمَا أُدْخِلَتْ الْأَلِفُ وَاللَّامُ في الْـ<حرف>حَسَنِ</حرف>
   </مقطع>
    <مقطع رقم="١١٠">ثُمَّ أَعْمَلْتَهُ</مقطع>
    <مقطع رقم="١١١">كَمَا قَالَ</مقطع>
    <مقطع رقم="١١٢">
       <قول>الضَّارِبُ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١١٣">وَعَلَىَ هٰذَا الْوَجْهِ تَقُوْلُ</مقطع>
    <مقطع رقم="١١٤">
       <قول>هُوَ الْحَسَنُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="١١٥">وَهِىَ عَرَبِيَّةٌ جَيِّدَةٌ</مقطع>
    <مقطع رقم="١١٦">قَالَ الْشَّاعِرُ</مقطع>
    <شاهدة رقم="١٢" xml:id="٤١-١٢">
       <بيت>
          <مصراع>فَمَا قَوْمِي بِثَعْلَبَةَ بْنِِ سَعْدٍ</مصراع>
          <مصراع>وَلَا بِفَزَارَةَ <شاهدة>الْشُّعْرِ الْرِّقَابَا</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١١٧">وَقَدْ يَجُوْزُ في هٰذَا</مقطع>
    <مقطع رقم="١١٨">أَنْ تَقُوْلَ</مقطع>
    <مقطع رقم="١١٩">
       <قول>هُوَ الْحَسَنُ الْوَجْهِ</قول>
   </مقطع>
    <مقطع رقم="١٢٠">عَلَى قَوْلِهِ</مقطع>
    <مقطع رقم="١٢١">
       <قول>هُوَ الضَّارِبُ الرَّجُلِ</قول>
   </مقطع>
    <مقطع رقم="١٢٢">فَالْجَّرُ في هٰذَا الْبَابِ</مقطع>
    <مقطع رقم="١٢٣">مِنْ وَجْهَيْنِ</مقطع>
    <مقطع رقم="١٢٤">مِنَ البَابِ الَّذِي هُوَ لَهُ</مقطع>
    <مقطع رقم="١٢٥">وَهُوَ الْإِضَافَةُ</مقطع>
    <مقطع رقم="١٢٦">وَمِنْ إِعْمَالِ الْفِعْلِ</مقطع>
    <مقطع رقم="١٢٧">ثُمَّ يُسْتَخَفُّ فَيُضَافُ</مقطع>
    <مقطع رقم="١٢٨">فَإِذَا ثَنَّيْتَ أَوْ جَمَعْتَ</مقطع>
    <مقطع رقم="١٢٩">فَأَثْبَتَّ الْنُّوْنَ</مقطع>
    <مقطع رقم="١٣٠">فَلَيْسَ إِلَّا النَّصْبُ</مقطع>
    <مقطع رقم="١٣١">وَذٰلِكَ قَوْلُهُمْ</مقطع>
    <مقطع رقم="١٣٢">
       <قول>هُمُ الطَّيِّبُونَ الْأَخْبَارَ</قول>
   </مقطع>
    <مقطع رقم="١٣٣">
       <قول>وَهُمَا الْحَسَنَانِ الْوُجُوْهَ</قول>
   </مقطع>
    <مقطع رقم="١٣٤">وَمِنْ ذٰلِكَ قَوْلُهُ تَعَالَى</مقطع>
    <مقطع رقم="١٣٥">
        <آية>قُلْ هَلْ نُنَبَّئُكُمْ بِالْأَخْسَرِينَ أَعْمَالا</آية>
   </مقطع>
    <هارون مجلد="١" صفحة="٢٠١"/>
    <مقطع رقم="١٣٦">وَقَالَتْ خِرْنِقُ مِنْ بَنِىٓ قَيْسٍ</مقطع>
    <شاهدة رقم="١٣" xml:id="٤١-١٣">
       <بيت>
          <مصراع>لَا يَبْعَدَنْ قَوْمِي الَّذِيْنَ هُمُ</مصراع>
          <مصراع>سَمُّ الْعُدَاةِ وَآفَةُ الْجُزْرِ</مصراع>
      </بيت>
       <بيت>
          <مصراع>الْنَّازِلُوْنَ بِكُلّ مُعْتَرَكٍ</مصراع>
          <مصراع>وَ<شاهدة>الْطَّيِّبُونَ مَعَاقِدَ الْأَزْرِ</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٣٧">فَإِنْ كَفَفْتَ النُّوْنَ جَرَرْتَ</مقطع>
    <مقطع رقم="١٣٨">كَانَ الْمَعْمُوْلُ فِيْهِ نَكِرَةً</مقطع>
    <مقطع رقم="١٣٩">أَوْ فِيْهِ أَلْفٌ وَلَامٌ</مقطع>
    <مقطع رقم="١٤٠">كَمَا قُلْتَ</مقطع>
    <مقطع رقم="١٤١">
       <قول>هَؤُلَاءِ الضَارْبُو زَيْدٍ</قول>
   </مقطع>
    <مقطع رقم="١٤٢">وَذٰلِكَ قَوْلُهُمْ</مقطع>
    <مقطع رقم="١٤٣">
       <قول>هُمُ الطَّيِّبُو أَخْبَارٍ</قول>
   </مقطع>
    <مقطع رقم="١٤٤">وَإِنْ شِئْتَ نَصَبْتَ عَلَى قَوْلِهِ</مقطع>
    <شاهدة رقم="١٤" xml:id="٤١-١٤">
       <بيت>
          <مصراع><شاهدة>الَحَافِظُوَ عَوْرَةَ</شاهدة> الْعَشِيرَةِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٤٥">وَتَقُوْلُ فِيْمَا لَا يَقَعُ إِلَّا مُنَوَّنًا</مقطع>
    <مقطع رقم="١٤٦">عَامِلًا في نَكِرَةٍ</مقطع>
    <مقطع رقم="١٤٧">وَإِنَّمَا وَقَعَ مُنَوَّنًا</مقطع>
    <مقطع رقم="١٤٨">لِأَنَّهُ فُصِلَ فِيْهِ</مقطع>
    <مقطع رقم="١٤٩">بَيْنَ الْعَامِلِ وَالْمَعْمُوْلِ</مقطع>
    <مقطع رقم="١٥٠">فَالْفَصْلُ لَازَمٌ لَهُ أَبَدًا</مقطع>
    <مقطع رقم="١٥١">مُظْهَرًا أَوْ مُضْمَرًا</مقطع>
    <مقطع رقم="١٥٢">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٥٣">
       <قول>هُوَ خَيْرٌ مِنْكَ أَبًا</قول>
   </مقطع>
    <مقطع رقم="١٥٤">وَ<قول>هُوَ أَحْسَنُ مِنْكَ وَجْهًا</قول>
   </مقطع>
    <مقطع رقم="١٥٥">وَلَا يَكُوْنُ الْمَعْمُوْلُ فِيْهِ إِلَّا مِنْ <هارون مجلد="١" صفحة="٢٠٢"/>سَبَبِهِ</مقطع>
    <مقطع رقم="١٥٦">وَإِنْ شِئْتَ قُلْتَ</مقطع>
    <مقطع رقم="١٥٧">
       <قول>هُوَ خَيْرٌ عَمَلًا</قول>
   </مقطع>
    <مقطع رقم="١٥٨">وَأَنْتَ تَنْوِي  <حرف>مِنْكَ</حرف>
   </مقطع>
    <مقطع رقم="١٥٩">وَإِنْ شِئْتَ أَخَّرْتَ الْفِصَلَ في اللَّفْظِ</مقطع>
    <مقطع رقم="١٦٠">وَأَصْلُهُ التَّقْدِيْمُ</مقطع>
    <مقطع رقم="١٦١">لِأَنَّهُ لَا يَمْنَعُهُ تَأْخِيْرُهُ عَمَلَهُ مُقَدَّمًا</مقطع>
    <مقطع رقم="١٦٢">كَمَا قَالَ</مقطع>
    <مقطع رقم="١٦٣">
       <قول>ضَرَبَ زَيْدًا عَمْرٌو</قول>
   </مقطع>
    <مقطع رقم="١٦٤">فَـ<حرف>عَمَرٌو</حرف>
   </مقطع>
    <مقطع رقم="١٦٥">مُؤَخَّرٌ في اللَّفْظِ</مقطع>
    <مقطع رقم="١٦٦">مَبْدُوءٌ بِهِ في الْمَعْنَى</مقطع>
    <مقطع رقم="١٦٧">وَهٰذَا مَبْدُوءٌ بِهِ</مقطع>
    <مقطع رقم="١٦٨">في أَنَّهُ يُثْبِتُ التَّنْوِينَ ثُمَّ يُعْمِلُ</مقطع>
    <مقطع رقم="١٦٩">وَلَا يَعْمَلُ إِلَّا في نَكِرَةٍ</مقطع>
    <مقطع رقم="١٧٠">كَمَا أَنَّهُ لَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
    <مقطع رقم="١٧١">وَلَا يَقْوَى قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
    <مقطع رقم="١٧٢">فَأَلْزَمَ فِيْهِ وَفِيْمَا يَعْمَلُ فِيْهِ وَجَهًا وَاحِدًا</مقطع>
    <مقطع رقم="١٧٣">وَيَعْمَلُ في الْجَمْعِ كَقَوْلِهِمْ</مقطع>
    <مقطع رقم="١٧٤">
       <قول>هُوَ خَيْرٌ مِنْكَ أَعْمَالًا</قول>
   </مقطع>
    <مقطع رقم="١٧٥">فَإِنْ أَضَفْتَ فَقُلْتَ</مقطع>
    <مقطع رقم="١٧٦">
       <قول>هٰذَا أَوَّلُ رَجُلٍ</قول>
   </مقطع>
    <مقطع رقم="١٧٧">اجْتَمَعَ فِيْهِ لُزُوْمُ النَّكِرَةِ</مقطع>
    <مقطع رقم="١٧٨">وَأَنْ يُلْفَظَ بِوَاحِدٍ</مقطع>
    <مقطع رقم="١٧٩">وَهُوَ يُرِيْدُ الْجَمْعَ</مقطع>
    <مقطع رقم="١٨٠">وَذٰلِكَ لِأِنَّهُ أَرَادَ أَنْ يَقُوْلَ</مقطع>
    <مقطع رقم="١٨١">
       <قول>أَوَّلُ الرِّجَالِ</قول>
   </مقطع>
    <مقطع رقم="١٨٢">فَحَذَفَ اسْتِخْفَافًا وَاخْتِصَارًا</مقطع>
    <مقطع رقم="١٨٣">كَمَا قَالُوْا</مقطع>
    <مقطع رقم="١٨٤">
       <قول>كُلُّ رَجُلٍ</قول>
   </مقطع>
    <مقطع رقم="١٨٥">يُرِيْدُوْنَ <قول>كُلَّ الرِّجَالِ</قول>
   </مقطع>
    <مقطع رقم="١٨٦">فَكَمَا اسْتَخَفُّوا بِحَذْفِ الْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="١٨٧">اسْتَخَفُّوا بِتَرْكِ بِنَاءِ الْجَمِيْعِ</مقطع>
    <مقطع رقم="١٨٨">وَاسْتَغْنَوْا عَنْ الْأَلْفِ وَاللَّامِ</مقطع>
    <مقطع رقم="١٨٩">وَعَنْ قَوْلِهِمْ</مقطع>
    <مقطع رقم="١٩٠">
       <قول>خَيْرُ الرِّجَالِ</قول>
   </مقطع>
    <مقطع رقم="١٩١">وَ<قول>أَوَّلُ الرِّجَالِ</قول>
   </مقطع>
    <مقطع رقم="١٩٢">وَمِثْلُ ذٰلِكَ في تَرْكِ الْأَلِفِ وَاللَّامِ وَبِنَاءِ الْجَمِيْعِ قَوْلُهُمْ</مقطع>
    <مقطع رقم="١٩٣">
       <قول>عِشْرُوْنَ دِرْهَمًا</قول>
   </مقطع>
    <مقطع رقم="١٩٤">إِنَّمَا أَرَادُوْا  <حرف>عِشْرِيْنَ مِنَ الدَّرَاهِمِ</حرف>
   </مقطع>
    <مقطع رقم="١٩٥">فَاخْتَصَرُوْا وَاسْتَخَفُّوا</مقطع>
    <مقطع رقم="١٩٦">وَلَمْ يَكُنْ دُخُوْلُ الْأَلِفِ وَاللَّامِ</مقطع>
    <مقطع رقم="١٩٧">يُغَيِّرُ الْعِشْرِيْنَ عَنْ نُكْرَتِهِ</مقطع>
    <مقطع رقم="١٩٨">فَاسْتَخَفُّوا بِتَرْكِ مَا لَمْ يُحْتَجْ إِلَيْهِ</مقطع>
    <مقطع رقم="١٩٩">وَلَمْ تَقْوَ هَذِهِ الْأَحْرُفُ قُوَّةَ الصِّفَةِ الْمُشَبَّهَةِ</مقطع>
    <مقطع رقم="٢٠٠">أَلَا تَرَى أَنَّكَ تُؤَنِّثُهَا وَتَذَكِّرُهَا وَتَجْمَعُهَا كَالْفَاعِلِ</مقطع>
    <مقطع رقم="٢٠١">تَقُوْلُ</مقطع>
    <مقطع رقم="٢٠٢">
       <قول>مَرَرْتُ بِرَجُلٍ حَسَنِ الْوَجْهِ أَبُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٢٠٣">كَمَا تَقُوْلُ</مقطع>
    <مقطع رقم="٢٠٤">
       <قول>مَرَرْتُ بِرَجُلٍ حَسَنٍ أَبُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٢٠٥">وَهُوَ مِثْلُ قَوْلِكَ</مقطع>
    <مقطع رقم="٢٠٦">
       <قول>مَرَرْتُ بِرَجُلٍ ضَارِبٍ <هارون مجلد="١" صفحة="٢٠٣"/>أَبُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٢٠٧">فَإِنْ جِئْتَ بِـ<حرف>خَيْرٍ مِنْكَ</حرف>
   </مقطع>
    <مقطع رقم="٢٠٨">أَوْ  <حرف>عِشْرِيْنَ</حرف>
   </مقطع>
    <مقطع رقم="٢٠٩">رَفَعْتَ لِأَنَّهَا مُلْحَقَةٌ بِالْأَسْمَاءِ</مقطع>
    <مقطع رقم="٢١٠">لَا تَعْمَلُ عَمَلَ الْفِعْلِ</مقطع>
    <مقطع رقم="٢١١">فَلَمْ تَقْوَ قُوَّةَ الْمُشَبَّهَةِ</مقطع>
    <مقطع رقم="٢١٢">كَمَا لَمْ تَقْوَ الْمُشَبَّهَةُ قُوَّةَ مَا جَرَىْ مَجْرَىْ الْفِعْلِ</مقطع>
    <مقطع رقم="٢١٣">وَتَقُوْلُ</مقطع>
    <مقطع رقم="٢١٤">
       <قول>هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
   </مقطع>
    <مقطع رقم="٢١٥">وَ<قول>أَفْرَهُ عَبْدٍ في النَّاسِ</قول>
   </مقطع>
    <مقطع رقم="٢١٦">لِأَنَّ الْفَارِهَ هُوَ الْعَبْدُ</مقطع>
    <مقطع رقم="٢١٧">وَلَمْ تُلْقِ  <حرف>أَفْرَهَ</حرف>  وَلَا  <حرف>خَيْرًا</حرف>  عَلَى غَيْرِهِ</مقطع>
    <مقطع رقم="٢١٨">ثُمَّ تَخْتَصُّ شَيْئًا</مقطع>
    <مقطع رقم="٢١٩">فَالْمَعْنَى مُخْتَلِفٌ</مقطع>
    <مقطع رقم="٢٢٠">وَلَيْسَ هُنَا فَصْلٌ</مقطع>
    <مقطع رقم="٢٢١">وَلَمْ يَلْزَمْ إِلِّا تَرْكُ التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٢٢٢">كَمَا أَنَّ  <حرف>عِشْرِيْنَ</حرف>  وَ<حرف>خَيْرًا مِنْكَ</حرف>
   </مقطع>
    <مقطع رقم="٢٢٣">لَمْ يَلْزَمْ فِيْهِ إِلَا التَّنْوِيْنُ</مقطع>
    <مقطع رقم="٢٢٤">وَلَمْ يُدْخِلُوَا الْأَلْفَ وَاللَّامَ</مقطع>
    <مقطع رقم="٢٢٥">كَمَا لَمْ يُدْخِلُوْهُ في الْأَوَّلِ</مقطع>
    <مقطع رقم="٢٢٦">وَتَفْسِيْرُهُ تَفْسِيْرُ الْأَوَّلُ</مقطع>
    <مقطع رقم="٢٢٧">وَإِنَّمَا أَرَادُوْا  <حرف>أَفْرَهَ الْعَبِيْدِ</حرف>
   </مقطع>
    <مقطع رقم="٢٢٨">وَ<حرف>خَيْرَ الْأَعْمَالِ</حرف>
   </مقطع>
    <مقطع رقم="٢٢٩">وَإِنَّمَا أَثْبَتُوْا الْأَلْفَ وَاللَّامَ في قَوْلِهِمْ <قول>أَفْضَلُ النَّاسِ</قول>
   </مقطع>
    <مقطع رقم="٢٣٠">لِأَنَّ الْأَوَّلَ قَدْ يَصْيِرُ بِهِ مَعْرِفَةً</مقطع>
    <مقطع رقم="٢٣١">فَأَثْبَتُوْا الْأَلِفَ وَاللَّامَ وَبِنَاءَ الْجَمِيْعِ</مقطع>
    <مقطع رقم="٢٣٢">وَلَمْ يُنَوَّنْ</مقطع>
    <مقطع رقم="٢٣٣">وَفَرَقُوْا بِتَرْكِ النُّوْنِ وَالتَّنْوْيِنِ بَيْنَ مَعْنَيَيْنِ</مقطع>
    <مقطع رقم="٢٣٤">وَقَدْ جَاءَ مِنْ الْفِعْلِ</مقطع>
    <مقطع رقم="٢٣٥">مَا قَدْ أُنْفِذَ إِلَى مَفْعُوْلٍ</مقطع>
    <مقطع رقم="٢٣٦">وَلَمْ يَقْوَ قُوَّةَ غَيْرِهِ</مقطع>
    <مقطع رقم="٢٣٧">مِمَّا قَدْ تَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
    <مقطع رقم="٢٣٨">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٢٣٩">
       <قول>امْتَلَأَتُ مَاءً</قول>
   </مقطع>
    <مقطع رقم="٢٤٠">وَ<قول>تَفَقَّأْتُ شَحْمًا</قول>
   </مقطع>
    <مقطع رقم="٢٤١">وَلَا تَقُوْلُ  <حرف>امْتَلَأْتُهُ</حرف>
       <هارون مجلد="١" صفحة="٢٠٤"/>وَلَا  <حرف>تَفَقَّأْتُهُ</حرف>
   </مقطع>
    <مقطع رقم="٢٤٢">وَلَا يَعْمَلُ في غَيْرِهِ مِنَ الْمَعَارِفِ</مقطع>
    <مقطع رقم="٢٤٣">وَلَا يُقَدَّمُ الْمَفْعُولُ فِيْهِ</مقطع>
    <مقطع رقم="٢٤٤">فَتَقُوْلَ <قول>مَاءً امْتَلَأْتُ</قول>
   </مقطع>
    <مقطع رقم="٢٤٥">كَمَا لَا يُقَدَّمُ الْمَفْعُوُلُ فِيْهِ</مقطع>
    <مقطع رقم="٢٤٦">في الصِّفِةِ الْمُشَبَّهَةِ</مقطع>
    <مقطع رقم="٢٤٧">وَلَا في هَذِهِ الْأَسْمَاءِ</مقطع>
    <مقطع رقم="٢٤٨">لِأَنَّهَا لَيْسَتْ كَالْفَاعِلِ</مقطع>
    <مقطع رقم="٢٤٩">وَذٰلِكَ لِأَنَّهُ</مقطع>
    <مقطع رقم="٢٥٠">فِعْلٌ لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
    <مقطع رقم="٢٥١">وَإِنَّمَا هُوَ بِمَنْزِلَةِ الانْفِعَالِ</مقطع>
    <مقطع رقم="٢٥٢">لَا يَتَعَدَّى إِلَى مَفْعُوْلٍ</مقطع>
    <مقطع رقم="٢٥٣">نَحْوُ <قول>كَسَرْتُهُ فَانْكَسَرَ</قول>
   </مقطع>
    <مقطع رقم="٢٥٤">وَ<قول>دَفَعْتُهُ فَانْدَفَعَ</قول>
   </مقطع>
    <مقطع رقم="٢٥٥">فَهٰذَا النَّحْوُ إِنَّمَا يَكُوْنُ في نَفْسِهِ</مقطع>
    <مقطع رقم="٢٥٦">وَلَا يَقَعُ عَلَى شَئٍ</مقطع>
    <مقطع رقم="٢٥٧">فَصَارَ  <حرف>امْتَلَأْتُ</حرف>  مِنْ هٰذَا الضَّرْبِ</مقطع>
    <مقطع رقم="٢٥٨">كَأَنَّكَ قُلْتَ <قول>مَلَأَنِي فَامْتَلَأْتُ</قول>
   </مقطع>
    <مقطع رقم="٢٥٩">وَمِثْلُهُ <قول>دَحْرَجْتُهُ فَتَدَحْرَجَ</قول>
   </مقطع>
    <مقطع رقم="٢٦٠">وَإِنَّمَا أَصْلُهُ</مقطع>
    <مقطع رقم="٢٦١">
       <قول>امْتَلَأْتُ مِنَ المَاءِ</قول>
   </مقطع>
    <مقطع رقم="٢٦٢">وَ<قول>تَفَقَّأْتُ مِنَ الشَّحْمِ</قول>
   </مقطع>
    <مقطع رقم="٢٦٣">فَحُذِفَ هٰذَا اسْتِخْفَافًا</مقطع>
    <مقطع رقم="٢٦٤">وَكَانَ الْفِعْلُ أَجْدَرُ أَنَ يَتَعَدَّى</مقطع>
    <مقطع رقم="٢٦٥">إنْ كَانَ هٰذَا يَنْفُذُ</مقطع>
    <مقطع رقم="٢٦٦">وَهُوَ</مقطع>
    <مقطع رقم="٢٦٧">في أَنَّهُمْ ضَعَّفُوهُ</مقطع>
    <مقطع رقم="٢٦٨">مِثْلُهُ</مقطع>
    <مقطع رقم="٢٦٩">وَتَقُوْلُ <قول>هُوَ أَشْجَعُ النَّاسِ رَجُلًا</قول>
   </مقطع>
    <مقطع رقم="٢٧٠">وَ<قول>هُمَا خَيْرُ النَّاسِ اثْنَيْنِ</قول>
   </مقطع>
    <مقطع رقم="٢٧١">فَالْمَجْرُوْرُ هُنَا بِمَنْزِلَةِ التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٢٧٢">وَانْتَصَبَ  <حرف>الرَّجُلُ</حرف>  وَ<حرف>الِاثْنَانِ</حرف>
   </مقطع>
    <مقطع رقم="٢٧٣">كَمَا انْتَصَبَ  <حرف>الْوَجْهُ</حرف>
   </مقطع>
    <مقطع رقم="٢٧٤">في قَوْلِكَ</مقطع>
    <مقطع رقم="٢٧٥">
       <قول>هُوَ أَحْسَنُ مِنْهُ وَجْهًا</قول>
   </مقطع>
    <مقطع رقم="٢٧٦">وَلَا يَكُوْنُ إِلَّا نَكِرَةً</مقطع>
    <مقطع رقم="٢٧٧">كَمَا لَمْ يَكُنْ ثَمَّةَ إِلَا نَكِرَةً</مقطع>
    <مقطع رقم="٢٧٨">وَالرَّجُلُ هُوَ الِاسْمُ الْمُبْتَدَأُ</مقطع>
    <مقطع رقم="٢٧٩">وَالِاثْنَانِ كَذٰلِكَ</مقطع>
    <مقطع رقم="٢٨٠">إِنَّمَا مَعْنَاهُ <قول>هُوَ خَيْرُ رَجُلٍ في النَّاسِ</قول>
   </مقطع>
    <مقطع رقم="٢٨١">وَ<قول>هُمَا خَيْرُ اثْنَيْنِ <هارون مجلد="١" صفحة="٢٠٥"/>في النَّاسِ</قول>
   </مقطع>
    <مقطع رقم="٢٨٢">وَإِنْ شِئْتَ لَمْ تَجْعَلْهُ الْأَوَّلَ</مقطع>
    <مقطع رقم="٢٨٣">فَتَقُوْلُ</مقطع>
    <مقطع رقم="٢٨٤">
       <قول>هُوَ أَكْثَرُ النَّاسِ مَالًا</قول>
   </مقطع>
    <مقطع رقم="٢٨٥">وَمِمَّا أُجْرِيَ هٰذَا الْمُجْرَى</مقطع>
    <مقطع رقم="٢٨٦">أَسْمَاءَ الْعَدَدِ</مقطع>
    <مقطع رقم="٢٨٧">تَقُوْلُ فِيْمَا كَانَ لِأَدْنَى الْعِدَّةِ</مقطع>
    <مقطع رقم="٢٨٨">بِالْإِضَافَةِ إِلَى مَا يُبْنَى لِجَمْعِ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع رقم="٢٨٩">إِلَى أَدْنَى الْعُقُوْدِ</مقطع>
    <مقطع رقم="٢٩٠">وَتُدْخِلُ في الْمُضَافِ إِلَيْهِ الْأَلْفَ وَالَّلامَ</مقطع>
    <مقطع رقم="٢٩١">لِأَنَّهُ يَكُوْنُ الْأَوَّلُ بِهِ مَعْرِفَةً</مقطع>
    <مقطع رقم="٢٩٢">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٢٩٣">
       <قول>ثَلَاثَةُ أَبْوَابٍ</قول>
   </مقطع>
    <مقطع رقم="٢٩٤">
       <قول>وَأَرْبَعَةُ أَنْفُسٍ</قول>
   </مقطع>
    <مقطع رقم="٢٩٥">وَ<قول>أَرْبَعَةُ أَثْوَابٍ</قول>
   </مقطع>
    <مقطع رقم="٢٩٦">فِيْمَا بَيْنَكَ وَبَيْنَ الْعَشَرَةِ</مقطع>
    <مقطع رقم="٢٩٧">وَإِذَا أَدْخَلْتَ الْأَلْفَ وَاللَّامَ قُلْتَ</مقطع>
    <مقطع رقم="٢٩٨">
       <قول>خَمْسَةُ الأَثْوَابِ</قول> وَ<قول>سِتَّةُ الْأَجْمَالِ</قول>
   </مقطع>
    <مقطع رقم="٢٩٩">فَلَا يَكُوْنُ هٰذَا أَبَدًا</مقطع>
    <مقطع رقم="٣٠٠">إِلَّا غَيْرَ مُنَوَّنٍ</مقطع>
    <مقطع رقم="٣٠١">يَلْزَمُهُ أَمَرٌ وَاحِدٌ</مقطع>
    <مقطع رقم="٣٠٢">لِمَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع رقم="٣٠٣">فَإِذَا زِدْتَ عَلَى الْعَشَرَةِ</مقطع>
    <مقطع رقم="٣٠٤">شَيْئًا مِنْ أَسْمَاءِ أَدْنَى الْعَدَدِ</مقطع>
    <مقطع رقم="٣٠٥">فَإِنَّهُ يُجْعَلُ مَعَ الْأَوَّلِ</مقطع>
    <مقطع رقم="٣٠٦">اسْمًا وَاحِدًا اسْتَحِفَافًا</مقطع>
    <مقطع رقم="٣٠٧">وَيَكُوْنُ في مَوْضِعِ اسْمٍ مُنَوَّنٍ</مقطع>
    <مقطع رقم="٣٠٨">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٣٠٩">
       <قول>أَحَدَ عَشَرَ دِرْهَمًا</قول>
   </مقطع>
    <مقطع رقم="٣١٠">وَ<قول>اثْنا عَشَرَ دِرْهَمًا</قول>
   </مقطع>
    <مقطع رقم="٣١١">وَ<قول>إِحْدَى عَشْرَةَ جَارِيَةٍ</قول>
   </مقطع>
    <مقطع رقم="٣١٢">فَعَلَى هٰذَا يُجْرَى مِنْ الْوَاحِدُ إِلَى التِّسْعَةِ</مقطع>
    <مقطع رقم="٣١٣">فَإِذَا ضَاعَفْتَ أَدْنَى الْعُقُوْدِ</مقطع>
    <مقطع رقم="٣١٤">كَانَ لَهُ اسْمٌ مِنْ لَفْظِهِ</مقطع>
    <مقطع رقم="٣١٥">وَلَا يُثَنَّى الْعَقْدُ</مقطع>
    <مقطع رقم="٣١٦">وَيُجْرَى ذٰلِكَ الْاسْمُ</مقطع>
    <مقطع رقم="٣١٧">مُجْرَى الْوَاحِدِ</مقطع>
    <مقطع رقم="٣١٨">الَّذِي لَحِقَتْهُ الزِيَادَةُ لِلْجَمْعِ</مقطع>
    <مقطع رقم="٣١٩">كَمَا لَحِقَتْهُ الزِّيَادَةُ لِلتَّثْنِيَةِ</مقطع>
    <مقطع رقم="٣٢٠">وَيَكُوْنُ حَرْفُ الْإِعْرَابِ الْوَاوَ وَالْيَاءَ</مقطع>
    <مقطع رقم="٣٢١">وَبَعْدَهُمَا النُّوْنُ</مقطع>
    <مقطع رقم="٣٢٢">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٣٢٣">
       <قول>عِشْرُوْنَ دِرْهَمًا</قول>
   </مقطع>
    <مقطع رقم="٣٢٤">فَإِنْ أَرَدْتَ أَنْ تَثَلِّثَ أَدْنَى الْعُقُوْدِ</مقطع>
    <مقطع رقم="٣٢٥">كَانَ لَهُ اسْمٌ مِنْ لَفْظِ الثَّلاثَةِ</مقطع>
    <مقطع رقم="٣٢٦">يَجْرِي مَجْرَى الِاسْمِ</مقطع>
    <مقطع رقم="٣٢٧">الَّذِىْ كَانَ لِلتَّثْنِيَةِ</مقطع>
    <هارون مجلد="١" صفحة="٢٠٦"/>
    <مقطع رقم="٣٢٨">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٣٢٩">
       <قول>ثَلَاثُوْنَ عَبْدًا</قول>
   </مقطع>
    <مقطع رقم="٣٣٠">وَكَذٰلِكَ إِلَى أَنْ تُتَسِّعَهُ</مقطع>
    <مقطع رقم="٣٣١">وَتَكُوْنُ النُّوْنُ لَازَمَةً لَهُ</مقطع>
    <مقطع رقم="٣٣٢">كَمَا كَانَ تَرْكُ التَّنْوِيْنِ</مقطع>
    <مقطع رقم="٣٣٣">لَازِمًا لِلثَّلاثَةِ إِلَى الْعَشَرَةِ</مقطع>
    <مقطع رقم="٣٣٤">وَإِنَّمَا فَعَلُوْا هٰذَا بِهَذِهِ الْأَسْمَاءِ</مقطع>
    <مقطع رقم="٣٣٥">وَأَلْزَمُوْهَا وَجَهًا وَاحِدًا</مقطع>
    <مقطع رقم="٣٣٦">لِأَنَّهَا لَيْسَتْ كَالصِّفَةِ الَّتِي في مَعْنَى الْفِعْلِ</مقطع>
    <مقطع رقم="٣٣٧">وَلَا الَّتِي شُبَّهَتْ بِهَا</مقطع>
    <مقطع رقم="٣٣٨">فَلَمْ تَقْوَ تِلْكَ الْقُوَّةَ</مقطع>
    <مقطع رقم="٣٣٩">وَلَمْ يَجُزْ حِيْنَ جَاوَزْتَ أَدْنَى الْعُقُوْدِ</مقطع>
    <مقطع رقم="٣٤٠">فِيْمَا تُبَيِّنُ بِهِ مِنْ أَىِّ صِنْفٍ الْعَدَدُ</مقطع>
    <مقطع رقم="٣٤١">إِلَّا أَنْ يَكُوْنَ لَفْظُهُ وَاحِدًا</مقطع>
    <مقطع رقم="٣٤٢">وَلَا تَكُوْنُ فِيْهِ الْأَلِفُ وَاللَّامُ</مقطع>
    <مقطع رقم="٣٤٣">لِمَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع رقم="٣٤٤">وَكَذٰلِكَ هُوَ إِلَى التِّسْعِيْنَ</مقطع>
    <مقطع رقم="٣٤٥">فِيْمَا يَعْمَلَ فِيْهِ</مقطع>
    <مقطع رقم="٣٤٦">وَيُبَيَّنُ بِهِ</مقطع>
    <مقطع رقم="٣٤٧">مِنْ أَيِّ صِنْفٍ الْعَدَدُ</مقطع>
    <مقطع رقم="٣٤٨">فَإِذَا بَلَغْتَ الْعَقْدَ الَّذِي يَلِيْهِ</مقطع>
    <مقطع رقم="٣٤٩">تَرَكْتَ التَّنْوِينَ وَالنُّوْنَ</مقطع>
    <مقطع رقم="٣٥٠">وَأَضَفْتَ</مقطع>
    <مقطع رقم="٣٥١">وَجَعَلْتَ</مقطع>
    <مقطع رقم="٣٥٢">الَّذِي يَعْمَلُ فِيْهِ</مقطع>
    <مقطع رقم="٣٥٣">وُيُبَّيَنُ بِهِ الْعَدَدُ</مقطع>
    <مقطع رقم="٣٥٤">مِنْ أَىِّ صِنْفٍ هُوَ</مقطع>
    <مقطع رقم="٣٥٥">وَاحِدًا</مقطع>
    <مقطع رقم="٣٥٦">كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَوَّنْتَ فِيْهِ</مقطع>
    <مقطع رقم="٣٥٧">إِلِّا أَنَّكَ تُدْخِلَ فِيْهِ الْأَلِفَ وَاللَّامَ</مقطع>
    <مقطع رقم="٣٥٨">لِأَنَّ الْأَوَّلَ يَكُوْنُ بِهِ مَعْرِفَةً</مقطع>
    <مقطع رقم="٣٥٩">وَلَا يَكُوْنُ الْمُنَوَّنُ بِهِ مَعْرِفَةً</مقطع>
    <مقطع رقم="٣٦٠">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٣٦١">
       <قول>مِائَةُ دِرْهَمٍ</قول>
   </مقطع>
    <مقطع رقم="٣٦٢">وَ<قول>مِائَةُ الدِّرْهَمِ</قول>
   </مقطع>
    <مقطع رقم="٣٦٣">وَذٰلِكَ إِنْ ضَاعَفْتَهُ قُلْتَ</مقطع>
    <مقطع رقم="٣٦٤">
       <قول>مِائَتَا دِرْهَمٍ</قول>
   </مقطع>
    <مقطع رقم="٣٦٥">وَ<قول>مِائَتَا الدِّيْنَارِ</قول>
   </مقطع>
    <مقطع رقم="٣٦٦">وَكَذٰلِكَ الْعَقْدُ الَّذِىْ بَعْدَهُ</مقطع>
    <مقطع رقم="٣٦٧">وَاحَدًا كَانَ أَوْ مُثَنًّى</مقطع>
    <مقطع رقم="٣٦٨">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٣٦٩">
       <قول>أَلْفُ دِرْهَمٍ</قول>
   </مقطع>
    <مقطع رقم="٣٧٠">وَ<قول>أَلْفَا دِرْهَمٍ</قول>
   </مقطع>
    <هارون مجلد="١" صفحة="٢٠٧"/>
    <مقطع رقم="٣٧١">وَقَدْ جَاءَ في الشِّعْرِ</مقطع>
    <مقطع رقم="٣٧٢">بَعْضُ هٰذَا مُنَوَّنًا</مقطع>
    <مقطع رقم="٣٧٣">قَالَ الْرُّبَيِّعُ بْنِ ضَبُعٍ الْفَزَارِىُّ</مقطع>
    <شاهدة رقم="١٥" xml:id="٤١-١٥">
       <بيت>
          <مصراع>إِذَا عَاشَ الْفَتَى <شاهدة>مِائَتَيْنِ عَامًا</شاهدة></مصراع>
          <مصراع>فَقَدْ أَوْدَى الْمَسَرَّةُ وَالْفَتَاءُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٧٤">وَقَالَ</مقطع>
    <شاهدة رقم="١٦" xml:id="٤١-١٦">
       <بيت>
          <مصراع>أَنْعَتُ عِيْرًا مِن حَمِيْرِ خَنْزَرَهْ</مصراع>
          <مصراع>في كُلَّ عِيْرٍ <شاهدة>مِائَتَانِ كَمَرةً</شاهدة></مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٢٠٨"/>
    <مقطع رقم="٣٧٥">وَأَمَّا ثَلٰثُمِائَةٍ إِلَى تِسْعِمِائَةٍ</مقطع>
    <مقطع رقم="٣٧٦">فَكَانَ يَنْبَغِي أَنْ تَكُوْنَ في الْقِيَاسِ</مقطع>
    <مقطع رقم="٣٧٧">
        <حرف>مِئَتَيْنِ</حرف>  أَوْ  <حرف>مِئَاتٍ</حرف>
   </مقطع>
    <مقطع رقم="٣٧٨">وَلَكِنَّهُمْ شَبَّهُوْهُ بِـ<حرف>عِشْرِيْنَ</حرف>  وَ<حرف>أَحَدَ عَشَرَ</حرف>
   </مقطع>
    <مقطع رقم="٣٧٩">حَيْثُ جَعَلُوا مَا يُبَيَّنُ بِهِ الْعَدَدُ وَاحِدًا</مقطع>
    <مقطع رقم="٣٨٠">لِأَنَّهُ اسْمٌ لِعَدَدٍ</مقطع>
    <مقطع رقم="٣٨١">كَمَا أَنَّ  <حرف>عِشْرِيْنَ</حرف>  اسْمٌ لِعَدَدٍ</مقطع>
    <مقطع رقم="٣٨٢">وَلَيْسَ بِمُسْتَنْكَرٍ في كَلَامِهِمْ</مقطع>
    <مقطع رقم="٣٨٣">أَنْ يَكُوْنَ اللَّفْظُ وَاحِدًا</مقطع>
    <مقطع رقم="٣٨٤">وَالْمَعْنَى جَمِيْعٌ</مقطع>
    <مقطع رقم="٣٨٥">حَتَّى قَالَ بَعْضُهُمْ في الشِّعْرِ مِنْ ذٰلِكَ</مقطع>
    <مقطع رقم="٣٨٦">مَا لَا يُسْتَعْمَلُ في الْكَلَامِ</مقطع>
    <مقطع رقم="٣٨٧">وَقَالَ عَلْقَمَةُ بِنُ عَبَدَةَ</مقطع>
    <شاهدة رقم="١٧" xml:id="٤١-١٧">
       <بيت>
          <مصراع>بِهَا جِيَفُ الْحَسْرَى فَأَمَّا عِظَامُهَا</مصراع>
          <مصراع>فَبِيْضٌ وَأَمَّا <شاهدة>جِلْدُهَا</شاهدة> فَصَلِيبُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٨٨">وَقَالَ</مقطع>
    <شاهدة رقم="١٨" xml:id="٤١-١٨">
       <بيت>
          <مصراع>لَا تُنْكِرُوْا الْقَتْلَ وَقَدْ سُبِينَا</مصراع>
          <مصراع>في <شاهدة>حَلْقِكُمْ</شاهدة> عَظْمٌ وَقَدْ شَجِينَا</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٢٠٩"/>
    <مقطع رقم="٣٨٩">فَاخْتُصَّ التَّثْلِيثُ بِهٰذَا الْبَابِ إِلَى تِسْعِمِائَةٍ</مقطع>
    <مقطع رقم="٣٩٠">كَمَا أَنَّ  <حرف>لَدُنْ</حرف>  لَهَا في  <حرف>غُدْوَةً</حرف> حَالٌ</مقطع>
    <مقطع رقم="٣٩١">لَيْسَتْ في غَيْرِهَا</مقطع>
    <مقطع رقم="٣٩٢">تُنْصَبُ بِهَا</مقطع>
    <مقطع رقم="٣٩٣">كَأَنَّهُ أَلْحَقَ التَّنْوِينَ</مقطع>
    <مقطع رقم="٣٩٤">في لُغَةِ مَنْ قَالَ  <حرف>لَدُ</حرف>
   </مقطع>
    <مقطع رقم="٣٩٥">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٣٩٦">
       <قول>مَنْ لَدُنْ غُدْوَةٌ</قول>
   </مقطع>
    <مقطع رقم="٣٩٧">وَقَالَ بَعْضُهُمْ</مقطع>
    <مقطع رقم="٣٩٨">
       <قول>لَدَا غَدْوَةٌ</قول>
   </مقطع>
    <مقطع رقم="٣٩٩">كَأَنَّهُ أَسْكَنَ الدَّالَّ</مقطع>
    <مقطع رقم="٤٠٠">ثُمَّ فَتَحَهَا</مقطع>
    <مقطع رقم="٤٠١">كَمَا قَالَ <قول>اضْرِبَنْ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٤٠٢">فَفُتِحَ الْبَاءُ لَمَّا جَاءَ بِالنُّوْنِ الْخَفِيفَةِ</مقطع>
    <مقطع رقم="٤٠٣">وَالْجَرُّ في  <حرف>غُدْوَةٍ</حرف>  هُوَ الْوَجْهُ وَالْقِيَاسُ</مقطع>
    <مقطع رقم="٤٠٤">وَتَكُوْنُ النُّوْنُ مِنْ نَفْسِ الْحَرْفِ</مقطع>
    <مقطع رقم="٤٠٥">بِمَنْزِلَةِ نُوْنِ  <حرف>مِنْ</حرف>  وَ<حرف>عَنْ</حرف>
   </مقطع>
    <مقطع رقم="٤٠٦">فَقَدْ يَشَذُّ الشيءُ مِنْ كَلَامِهِمْ عَنْ نَظَائِرِهِ</مقطع>
    <مقطع رقم="٤٠٧">وَيَسْتَخِفُّوْنَ الشيءَ في مَوْضِعٍ وَ لَا يَسْتَخِفُّونَهُ في غَيْرِهِ</مقطع>
    <مقطع رقم="٤٠٨">وَذٰلِكَ قَوْلُهُمْ <قول>مَا شَعَرْتُ بِهِ شِعْرَةً</قول> وَ<قول>لَيْتَ شِعْرِى</قول>
   </مقطع>
    <مقطع رقم="٤٠٩">وَيَقُوْلُوْنَ  <حرف>الْعَمْرُ</حرف>  وَ<حرف>الْعُمْرُ</حرف>
   </مقطع>
    <مقطع رقم="٤١٠">لَا يَقُوْلُوْنَ في الْيَمِيْنِ إِلَّا بِالْفَتْحِ</مقطع>
    <مقطع رقم="٤١١">يَقُوْلُوْنَ كُلُّهُمْ  <حرف>لَعَمْرُكَ</حرف>
   </مقطع>
    <مقطع رقم="٤١٢">وَسَتَرَى أَشْبَاهَ هٰذَا أَيْضًا في كَلَامِهِمْ إِنْ شَاءَ اللّٰهُ</مقطع>
    <مقطع رقم="٤١٣">وَمِمَّا جَاءَ في الشِّعْرِ</مقطع>
    <مقطع رقم="٤١٤">عَلَى لَفْظِ الْوَاحِدِ يُرَادُ بِهِ الْجَمِيْعُ</مقطع>
    <شاهدة رقم="١٩" xml:id="٤١-١٩">
       <بيت>
          <مصراع>كُلُوْا في بَعْضِ بَطْنِكُمُ تَعِفُّوا</مصراع>
          <مصراع>فَإِنَّ زَمَانَكُمْ زَمَنٌ خَمِيْصُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٤١٥">وَمِثْلُ ذٰلِكَ في الْكَلَامِ قَوْلُهُ تَبَارَكَ وَتَعَالَى</مقطع>
    <مقطع رقم="٤١٦">
        <آية>فَإِنْ طِبْنَ لَكُمْ عَنْ شئٌ مِنْهُ نَفْسَا</آية>
   </مقطع>
    <مقطع رقم="٤١٧">وَقَرَرْنَا بِهِ عَيْنًا وَإِنْ شِئْتَ قُلْتُ  <حرف>أَعْيُنًا</حرف>  وَ<حرف>أَنْفُسًا</حرف>
   </مقطع>
    <هارون مجلد="١" صفحة="٢١٠"/>
    <مقطع رقم="٤١٨">كَمَا قُلْتَ  <حرف>ثَلَثِمِائَةٍ</حرف>  وَ<حرف>ثَلَاثِ مِئِيْنَ</حرف>  وَ<حرف>مِئَاتٍ</حرف>
   </مقطع>
    <مقطع رقم="٤١٩">وَلَمْ يُدْخِلُوَا الْأَلِفَ وَاللَّامَ كَمَا لَمْ يُدْخِلُوَا في <قول>امْتَلَأَتُ مَاءً</قول>
   </مقطع>
</باب>
