     يعقوب="٤-٤٧"
     رقم="٤١٦">
    <عنوان>
       <مقطع رقم="١">هَٰذَا بَاْبُ تَكْسِيْرِ الْوَاْحِدِ لِلْجَمْعِ</مقطع>
   </عنوان>
    <جزء رقم="١" هو="١">
       <عنوان>بَاْبُ فَعْل</عنوان>
       <مقطع رقم="٢">أَمَّا مَا كَاْنَ مِنَ الْأَسْمَاْءِ عَلَى ثَلَاْثَةِ أَحَرْفٍ وَكَاْنَ <مثل>فَعْلًا</مثل>
      </مقطع>
       <مقطع رقم="٣">فَإِنَّكَ إِذَا ثَلَّثْتَهُ إِلَى أَنْ تُعَشِّرَهُ فَإِنَّ تَكْسِيْرَهُ <مثل>أَفْعُلٌ</مثل>
      </مقطع>
       <مقطع رقم="٤">وَذَٰلِكَ قَوْلُكَ <اسم>كَلْبٌ وَأَكْلُبٌ</اسم>
      </مقطع>
       <مقطع رقم="٥">وَ<اسم>كَعْبٌ</اسم> وَ<اسم عدد="٣">أَكْعُبٌ</اسم>
      </مقطع>
       <مقطع رقم="٦">وَ<اسم>فَرْخٌ</اسم> وَ<اسم عدد="٣">أَفْرُخٌ</اسم>
      </مقطع>
       <مقطع رقم="٧">وَ<اسم>نَسْرٌ</اسم> وَ<اسم عدد="٣">أَنْسُرٌ</اسم>
      </مقطع>
       <مقطع رقم="٨">فَإِذَا جَاوَزَ الْعَدَدُ هَٰذَا فَإِنَّ الْبِنَاْءَ قَدْ يَجِيْءُ عَلَى <مثل>فِعَاْلٍ</مثل> وَعَلَى <مثل>فُعُوْلٌ</مثل>
      </مقطع>
       <مقطع رقم="٩">وَذَٰلِكَ قَوْلُكَ <اسم عدد="٤">كِلَاْبٌ</اسم> وَ<اسم عدد="٤">كِبَاْشٌ</اسم> وَ<اسم عدد="٤">بِغَالٌ</اسم>
      </مقطع>
       <مقطع رقم="١٠">وَأَمَّا الْـ<مثل>فُعُولُ</مثل> فَـ<اسم ج="فُعُول">نْسُورٌ</اسم> وَ<اسم ج="فُعُول">بُطُونٌ</اسم>
      </مقطع>
       <مقطع رقم="١١">وَرُبَّمَا كَاْنَتْ فِيْهِ اللُّغَتَانِ فَقَاْلُوْا <مثل>فُعُوْلٌ</مثل> وَ<مثل>فِعَاْلٌ</مثل>
      </مقطع>
       <مقطع رقم="١٢">وَذَٰلِكَ قَوْلُهُمْ <اسم عدد="٤">فُرُوخٌ</اسم> وَ<اسم عدد="٤">فِرَاْخٌ</اسم> وَ<اسم عدد="٤">كُعُوبٌ</اسم> وَ<اسم عدد="٤">كِعَاْبٌ</اسم> وَ<اسم عدد="٤">فُحُولٌ</اسم> وَ<اسم عدد="٤">فِحَاْلٌ</اسم>
      </مقطع>
       <مقطع رقم="١٣">وَرُبَّمَا جَاْءَ <مثل>فَعِيلًا</مثل> وَهُوَ قَلِيْلٌ نَحْوُ الْـ<اسم عدد="٤">كَلِيْبِ</اسم> وَالْـ<اسم عدد="٤">عَبِيْدِ</اسم>
      </مقطع>
       <مقطع رقم="١٤">وَالْمُضَاْعَفُ يَجْرِي هَٰذَا الْمَجْرَى</مقطع>
       <مقطع رقم="١٥">وَذَٰلِكَ قَوْلُكَ <اسم>ضَبٌّ</اسم> وَ<اسم عدد="٣">أَضُبٌّ</اسم> وَ<اسم عدد="٤">ضِبَاْبٌ</اسم>
      </مقطع>
       <مقطع رقم="١٦">كَمَا قُلْتَ <اسم>كَلْبٌ</اسم> وَ<اسم عدد="٣">أَكْلُبٌ</اسم> وَ<اسم عدد="٤">كِلَاْبٌ</اسم>
      </مقطع>
       <مقطع رقم="١٧">وَ<اسم>صَكٌّ</اسم> وَ<اسم عدد="٣">أَصُكٌّ</اسم> وَ<اسم عدد="٤">صِكَاكٌ</اسم> وَ<اسم عدد="٤">صُكُوكٌ</اسم>
      </مقطع>
       <مقطع رقم="١٨">كَمَا قَاْلُوْا <اسم>فَرْخٌ</اسم> وَ<اسم عدد="٣">أَفْرُخٌ</اسم> وَ<اسم عدد="٤">فِرَاْخٌ</اسم> وَ<اسم عدد="٤">فُرُوخٌ</اسم>
      </مقطع>
       <مقطع رقم="١٩">وَ<اسم>بَتٌّ</اسم> وَ<اسم عدد="٣">أَبُتٌّ</اسم> وَ<اسم عدد="٤">بُتُوتٌ</اسم> وَ<اسم عدد="٤">بِتَاْتٌ</اسم>
      </مقطع>
       <مقطع رقم="٢٠">وَالْيَاْءُ وَالْوَاْوُ بِتِلْكَ الْمَنْزِلَةِ تَقُوْلُ <اسم>ظَبْيٌ</اسم> وَ<اسم عدد="٢">ظَبْيَاْنِ</اسم> وَ<اسم عدد="٣">أَظْبٍ</اسم> وَ<اسم عدد="٤">ظِبَاْءٌ</اسم>
      </مقطع>
       <مقطع رقم="٢١">كَمَا قَاْلُوْا <اسم>كَلْبٌ</اسم> وَ<اسم عدد="٢">كَلْبَانِ</اسم> وَ<اسم عدد="٣">أَكْلُبٌ</اسم> وَ<اسم عدد="٤">كِلَاْبٌ</اسم>
      </مقطع>
       <مقطع رقم="٢٢">وَ<اسم>دَلْوٌ</اسم> وَ<اسم عدد="٢">دَلْوَاْنِ</اسم> وَ<اسم عدد="٣">أَدْلٍ</اسم> وَ<اسم عدد="٤">دِلَاْءٌ</اسم>
      </مقطع>
       <مقطع رقم="٢٣">وَ<اسم>ثَدْيٌ</اسم> وَ<اسم عدد="٢">ثَدْيَاْنِ</اسم> وَ<اسم عدد="٣">أَثْدٍ</اسم> وَ<اسم عدد="٤">ثُدِيٌّ</اسم>
      </مقطع>
       <مقطع رقم="٢٤">كَمَا قَاْلُوْا <اسم عدد="٣">أَصْقُرٌ</اسم> وَ<اسم عدد="٤">صُقُورٌ</اسم>
      </مقطع>
       <مقطع رقم="٢٥">وَنَظِيْرُ <اسم عدد="٤">فِرَاْخٍ</اسم> وَ<اسم عدد="٤">فُرُوْخٍ</اسم> قَوْلُهُمْ الـ<اسم عدد="٤">دِّلَاْءُ</اسم> وَالـ<اسم عدد="٤">دُّلِيُّ</اسم>
      </مقطع>
       <هارون مجلد="٣" صفحة="٥٦٧"/>
       <مقطع رقم="٢٦">وَٱعْلَمْ أَنَّهُ قَدْ يَجِيْءُ فِي <مثل>فَعْلٍ</مثل>
          <مثل>أَفْعَاْلٌ</مثل> مَكَاْنَ <مثل>أَفْعُلٍ</مثل>
      </مقطع>
       <مقطع رقم="٢٧">قَاْلَ الشَّاْعِرُ الْأَعْشَى</مقطع>
       <شاهدة رقم="١" xml:id="٤١٦-١">
          <بيت>
             <مصراع>وُجِدْتَ إِذَا اصْطَلَحُوا خَيْرَهُم</مصراع>
             <مصراع>وَزَنْدُكَ أَثْقَبُ أَزْناْدِهَا</مصراع>
         </بيت>
      </شاهدة>
       <مقطع رقم="٢٨">وَلَيْسَ ذَٰلِكَ بِالْبَاْبِ فِي كَلَامِ الْعَرَبِ وَمِنْ ذٰلِكَ قَوْلُهُمْ <اسم عدد="٣">أَفْرَاْخٌ</اسم> وَ<اسم عدد="٣">أَجْدَاْدٌ</اسم> وَ<اسم عدد="٣">أَفْرَاْدٌ</اسم> وَ<اسم عدد="٣">أَجُدٌّ</اسم> عَرَبِيَّةٌ وَهِيَ الْأَصْلُ</مقطع>
       <مقطع رقم="٢٩">وَ<اسم>رَأْدٌ</اسم> وَ<اسم عدد="٣">أَرْآدٌ</اسم> وَالرَّأْدُ أَصْلُ اللَّحْيَيْنِ</مقطع>
       <مقطع رقم="٣٠">وَرُبَّمَا كُسِّرَ الْـ<مثل>فَعْلُ</مثل> عَلَى <مثل>فِعَلَةٍ</مثل>
      </مقطع>
       <مقطع رقم="٣١">كَمَا كُسِّرَ عَلَى <مثل>فِعَاْلٍ</مثل> وَ<مثل>فُعُوْلٍ</مثل>
      </مقطع>
       <مقطع رقم="٣٢">وَلَيْسَ ذَٰلِكَ بِالْأَصْلِ</مقطع>
       <مقطع رقم="٣٣">وَذَٰلِكَ قَوْلُهُمْ <اسم>جَبْءٌ</اسم> وَهِيَ الْكَمْأَةُ الْحَمْرَاْءُوَ<اسم عدد="٤">جَبْأَةٌ</اسم> وَ<اسم>فَقْعٌ</اسم> وَ<اسم عدد="٤">فِقَعَةٌ</اسم> وَ<اسم>قَعْبٌ</اسم> وَ<اسم عدد="٤">قِعَبَةٌ</اسم>
      </مقطع>
       <مقطع رقم="٣٤">وَقَدْ يُكَسَّرُ عَلَى <مثل>فُعُوْلَةٍ</مثل> وَ<مثل>فِعَاْلَةٍ</مثل> فَيُلْحِقُوْنَ هَاْءَ التَّأْنِيثِ الْبِنَاْءَ وَهُوَ الْقِيَاْسُ أَنْ يُكَسَّرَ عَلَيْهِ</مقطع>
       <مقطع رقم="٣٥">وَزَعَمَ الْخَلِيْلُ أَنَّهُمْ إِنَّمَا أَرَاْدُوا أَنْ يُحَقِّقُوا التَّأْنِيثَ</مقطع>
       <مقطع رقم="٣٦">وَذَٰلِكَ نَحْوُ الْـ<اسم عدد="٤">فِحَاْلَةِ</اسم> وَالْـ<اسم عدد="٤">بُعُوْلَةِ</اسم> وَالْـ<اسم عدد="٤">عُمُوْمَةِ</اسم>
      </مقطع>
       <مقطع رقم="٣٧">وَالْقِيَاْسُ فِي <مثل>فَعْلٍ</مثل> مَا ذَكَرْنَا</مقطع>
       <مقطع رقم="٣٨">وَأَمَّا مَا سِوَى ذَٰلِكَ فَلَا يُعْلَمُ إِلَّا بِالسَّمْعِ ثُمَّ تَطْلُبُ النَّظَاْئِرَ</مقطع>
       <مقطع رقم="٣٩">كَمَا أَنَّكَ تَطْلُبُ نَظَاْئِرَ الْأَفْعَالِ هَاهُنَا</مقطع>
       <مقطع رقم="٤٠">فَتَجْعَلُ نَظِيْرَ الْـ<حرف>أَزْنَاْدِ</حرف>  قَوْلَ الشَّاْعِرِ وَهُوَ الْأَعْشَى</مقطع>
       <شاهدة رقم="٢" xml:id="٤١٦-٢">
          <بيت>
             <مصراع>إِذَا رَوَّحَ الرَّاْعِي اللِّقَاْحَ مُعَزِّبًا</مصراع>
             <مصراع>وَأَمْسَتْ عَلَى آنَاْفِهَا عَبَرَاْتُهَا</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="٣" صفحة="٥٦٨"/>
       <مقطع رقم="٤١">وَقَدْ يَجِيْءُ  <حرف>خَمْسَةُ كِلَاْبٍ</حرف>  يُرَاْدُ بِهِ <اسم>خَمْسَةٌ مِنَ الْكِلَاْبِ</اسم>
      </مقطع>
       <مقطع رقم="٤٢">كَمَا تَقُوْلُ <قول>هٰذَا صَوْتُ كِلَاْبٍ</قول> أَيْ <اسم>هٰذَا مِنْ هٰذَا الْجِنْسِ</اسم>
      </مقطع>
       <مقطع رقم="٤٣">وَكَمَا تَقُوْلُ <اسم>هٰذَا حَبُّ رُمَّاْنٍ</اسم>
      </مقطع>
       <مقطع رقم="٤٤">وَقَاْلَ الرَّاْجِزُ</مقطع>
       <شاهدة رقم="٣" xml:id="٤١٦-٣">
          <بيت>
             <مصراع>كَأَنَّ خُصْيَيْهِ مِنَ التَّدَلْدُلِ</مصراع>
             <مصراع>ظَرْفُ عَجُوْزٍ فِيْهِ ثِنْتَا حَنْظَلِ</مصراع>
         </بيت>
      </شاهدة>
       <مقطع رقم="٤٥">وَقَاْلَ الْآخَرُ <هارون مجلد="٣" صفحة="٥٦٩"/>
      </مقطع>
       <شاهدة رقم="٤" xml:id="٤١٦-٤">
          <بيت>
             <مصراع>قَدْ جَعَلَتْ مَيٌّ عَلَى الظِّرَاْرِ</مصراع>
             <مصراع>خَمْسَ بَنَاْنٍ قَاْنِيء الْأَظْفَاْرِ</مصراع>
         </بيت>
      </شاهدة>
   </جزء>
    <جزء رقم="٢" هو="٢" قطع="صفحة">
       <عنوان>بَاْبُ فَعَل</عنوان>
       <مقطع رقم="٤٦">وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثل>فَعَلًا</مثل> فَإِنَّكَ إِذَا كَسَّرْتَهُ لِأَدْنَى الْعَدَدِ بَنَيْتَهُ عَلَى <مثل>أَفْعَاْلٍ</مثل>
      </مقطع>
       <مقطع رقم="٤٧">وَذَٰلِكَ قَوْلُكَ <اسم>جَمَلٌ</اسم> وَ<اسم عدد="٣">أَجْمَاْلٌ</اسم>
      </مقطع>
       <مقطع رقم="٤٨">وَ<اسم>جَبَلٌ</اسم> وَ<اسم عدد="٣">أَجْبَالٌ</اسم>
      </مقطع>
       <مقطع رقم="٤٩">وَ<اسم>أَسَدٌ</اسم> وَ<اسم عدد="٣">آسَاْدٌ</اسم>
      </مقطع>
       <مقطع رقم="٥٠">فَإِذَا جَاوَزُوا بِهِ أَدْنَى الْعَدَدِ فَإِنَّهُ يَجِيْءُ عَلَى <مثل>فِعَاْلٍ</مثل> وَ<مثل>فُعُوْلٍ</مثل>
      </مقطع>
       <مقطع رقم="٥١">فَأَمَّا الْـ<مثل>فِعَاْلُ</مثل> فَنَحْوُ <اسم عدد="٤">جِمَالٍ</اسم> وَ<اسم عدد="٤">جِبَالٍ</اسم>
      </مقطع>
       <مقطع رقم="٥٢">وَأَمَّا الْـ<مثل>فُعُوْلُ</مثل> فَنَحْوُ <اسم عدد="٤">أُسُوْدٍ</اسم> وَ<اسم عدد="٤">ذُكُوْرٍ</اسم>
      </مقطع>
       <مقطع رقم="٥٣">وَالْـ<مثل>فِعَاْلُ</مثل> فِي هَٰذَا أَكْثَرُ</مقطع>
       <مقطع رقم="٥٤">وَقَدْ يَجِيْءُ إِذَا جَاوَزُوا بِهِ أَدْنَى الْعَدَدِ عَلَى <مثل>فُعْلَاْنٍ</مثل> وَ<مثل>فِعْلَاْنٍ</مثل>
      </مقطع>
       <مقطع رقم="٥٥">فَأَمَّا <مثل>فِعْلَاْنٌ</مثل> نَحْوُ <اسم عدد="٤">خِرْبَاْنٍ</اسم> وَ<اسم عدد="٤">بِرْقَاْنٍ</اسم> وَ<اسم عدد="٤">وِرْلَاْنٍ</اسم>
      </مقطع>
       <مقطع رقم="٥٦">وَأَمَّا <مثل>فُعْلَاْنٌ</مثل> فَنَحْوُ <اسم عدد="٤">حُمْلَاْنٍ</اسم> وَ<اسم عدد="٤">سُلْقَاْنٍ</اسم>
      </مقطع>
       <مقطع رقم="٥٧">فَإِذَا لَمْ تُجَاوِزْ أَدْنَى الْعَدَدِ قُلْتَ <اسم عدد="٣">أَبْرَاقٌ</اسم> وَ<اسم عدد="٣">أَحْمَالٌ</اسم> وَ<اسم عدد="٣">أَوْرَالٌ</اسم> وَ<اسم عدد="٣">أَخْرَاْبٌ</اسم> وَ<اسم>سَلْقٌ</اسم> وَ<اسم عدد="٣">أَسْلَاقٌ</اسم>
      </مقطع>
       <مقطع رقم="٥٨">وَربمَا جَاْءَ الـ<مثل>أَفْعَاْلُ</مثل> يُسْتَغْنَى بِهِ أَنْ يُكَسَّرَ الِٱسْمُ عَلَى الْبِنَاْءِ الَّذِي هُوَ لأَكْثَرِ <هارون مجلد="٣" صفحة="٥٧٠"/>الْعَدَدِ فَيُعْنَى بِهِ مَا عُنِيَ بِذَٰلِكَ الْبِنَاْءِ مِنَ الْعَدَدِ</مقطع>
       <مقطع رقم="٥٩">وَذَٰلِكَ نَحْوُ <اسم>قَتَبٍ</اسم> وَ<اسم عدد="٤">أَقْتَاْبٍ</اسم> وَ<اسم>رَسَنٍ</اسم> وَ<اسم عدد="٤">أَرْسَانٍ</اسم>
      </مقطع>
       <مقطع رقم="٦٠">وَنَظِيْرُ ذَٰلِكَ مِنْ بَاْبِ الْـ<مثل>فَعْلِ</مثل>
          <اسم>الْأُكُفِّ</اسم> وَ<اسم عدد="٤">الْأَرْآدِ</اسم>
      </مقطع>
       <مقطع رقم="٦١">وَقَدْ يَجِيْء الْـ<مثل>فَعْلُ</مثل>
          <مثل>فُعْلَاْنًا</مثل>
      </مقطع>
       <مقطع رقم="٦٢">وَذٰلِكَ قَوْلُكَ <اسم>ثَغْبٌ</اسم> وَ<اسم عدد="٤">ثُغْبَاْنٌ</اسم> وَالثَّغْبُ الْغَدِيْرُ</مقطع>
       <مقطع رقم="٦٣">وَ<اسم>بَطْنٌ</اسم> وَ<اسم عدد="٤">بُطْنِاْنٌ</اسم> وَ<اسم>ظَهْرٌ</اسم> وَ<اسم عدد="٤">ظَهْرَاْنٌ</اسم>
      </مقطع>
       <مقطع رقم="٦٤">وَقَدْ يَجِيْء عَلَى <مثل>فِعْلاْنٍ</مثل> وَهُوَ أَقَلُّهُمَا نَحْوُ <اسم>حَجْلٍ</اسم> وَ<اسم عدد="٤">حِجْلَانٍ</اسم>
      </مقطع>
       <مقطع رقم="٦٥">وَ<اسم>رَأَلٍ</اسم> وَ<اسم عدد="٤">رِثْلَانٍ</اسم>
      </مقطع>
       <مقطع رقم="٦٦">وَ<اسم>جَحْشٍ</اسم> وَ<اسم عدد="٤">جِحْشَاْنٍ</اسم>
      </مقطع>
       <مقطع رقم="٦٧">وَ<اسم>عَبْدٍ</اسم> وَ<اسم عدد="٤">عِبْدَاْنٍ</اسم>
      </مقطع>
       <مقطع رقم="٦٨">وَقَدْ يُلْحِقُونَ الْـ<مثل>فِعَالَ</مثل> الْهَاْءَ كَمَا أَلْحَقُوا الْـ<مثل>فِعَالَ</مثل> الَّتِي فِي الْـ<مثل>فَعْلِ</مثل>
      </مقطع>
       <مقطع رقم="٦٩">وَذَٰلِكَ قَوْلُهُمْ فِي <اسم>جَمَلٍ</اسم>
          <اسم عدد="٤">جِمَالَةٌ</اسم> وَ<قول>حَجَرٍ</قول>
          <اسم عدد="٤">حِجَاْرَةٌ</اسم>
      </مقطع>
       <مقطع رقم="٧٠">وَ<اسم>ذِكْرٍ</اسم>
          <اسم عدد="٤">ذِكَاْرَةٌ</اسم>
      </مقطع>
       <مقطع رقم="٧١">وَذَٰلِكَ قَلِيْلٌ وَالْقِيَاْسُ عَلَى مَا ذَكَرْنَا</مقطع>
       <مقطع رقم="٧٢">وَقَدْ كُسِّرَ عَلَى <مثل>فُعْلٍ</مثل> وَذٰلِكَ قَلِيْلٌ كَمَا أَنَّ <مثل>فِعَلَةً</مثل> فِي بَاْب <مثل>فِعْلٍ</مثل> قَلِيْلٌ</مقطع>
       <مقطع رقم="٧٣">وَذٰلِكَ نَحْوُ <اسم>أَسَدٍ</اسم> وَ<اسم عدد="٤">أُسْدٍ</اسم> وَ<اسم>وَثَنٍ</اسم> وَ<اسم عدد="٤">وُثْنٍ</اسم>
      </مقطع>
       <مقطع رقم="٧٤">بَلَغَنَا أَنَّهَا قِرَاْءَةٌ وَبَلَغَنِي أَنَّ بَعْضَ الْعَرَبِ يَقُوْلُ <اسم>نَصَفٌ</اسم> وَ<اسم عدد="٤">نُصْفٌ</اسم>
      </مقطع>
       <مقطع رقم="٧٥">وَرُبَّمَا كَسَّرُوا <مثل>فَعَلًا</مثل> عَلَى <مثل>أَفْعُلٍ</مثل>
      </مقطع>
       <مقطع رقم="٧٦">كَمَا كَسَّرُوْا <مثل>فَعْلًا</مثل> عَلَى <مثل>أَفْعَاْلٍ</مثل>
      </مقطع>
       <مقطع رقم="٧٧">وَذَٰلِكَ قَوْلُكَ <اسم>زَمَنٌ</اسم> وَ<اسم عدد="٤">أَزْمُنٌ</اسم>
      </مقطع>
       <مقطع رقم="٧٨">وَبَلَغَنَا أَنَّ بَعْضَهُمْ يَقُوْلُ <اسم>جَبَلٌ</اسم> وَ<اسم عدد="٣">أَجْبُلٌ</اسم>
      </مقطع>
       <مقطع رقم="٧٩">وَقَاْلَ الشَّاْعِرُ وَهُوَ ذُو الرُّمَّةِ</مقطع>
       <شاهدة رقم="٥" xml:id="٤١٦-٥">
          <بيت>
             <مصراع>أَمَنْزِلَتَيْ مَيِّ سَلامٌ عَلَيْكُمَا</مصراع>
             <مصراع>هَلِ الأَزْمُنُ اللَّائِي مَضَيْنَ رَوَاْجعِ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="٣" صفحة="٥٧١"/>
       <مقطع رقم="٨٠">وَبَنَاْتُ الْيَاْءِ وَالْوَاْوِ تُجْرَى هٰذَا الْمَجْرَى</مقطع>
       <مقطع رقم="٨١">قَاْلُوْا <اسم>قَفًا</اسم> وَ<اسم عدد="٤">أَقْفَاْءٌ</اسم> وَ<اسم عدد="٤">قُفِيٌّ</اسم>
      </مقطع>
       <مقطع رقم="٨٢">وَ<اسم>عَصًى</اسم> [ <اسم>عَصًا</اسم> ]وَ<اسم عدد="٤">عُصِيٌّ</اسم>
      </مقطع>
       <مقطع رقم="٨٣">وَ<اسم>صَفًا</اسم> وَ<اسم عدد="٤">أَصْفَاْءٌ</اسم> وَ<اسم عدد="٤">صُفِيٌّ</اسم>
      </مقطع>
       <مقطع رقم="٨٤">كَمَا قَاْلُوْا <اسم عدد="٤">آسَاْدٌ</اسم> وَ<اسم عدد="٤">أَسُوْدٌ</اسم>
      </مقطع>
       <مقطع رقم="٨٥">وَ<اسم عدد="٤">أَشْعَاْرٌ</اسم> وَ<اسم عدد="٤">شُعُوْرٌ</اسم>
      </مقطع>
       <مقطع رقم="٨٦">وَقَاْلُوْا <اسم>رَحًى</اسم> وَ<اسم عدد="٤">أَرْحَاْءٌ</اسم> فَلَمْ يُكَسِّرُوْهَا عَلَى غَيْرِ ذَٰلِكَ</مقطع>
       <مقطع رقم="٨٧">كَمَا لَمْ يُكَسِّرُوْا الـ<اسم عدد="٤">أَرْسَاْنَ</اسم> وَالْـ<اسم عدد="٤">أَقْدَاْمَ</اسم> عَلَى غَيْرِ ذَٰلِكَ</مقطع>
       <مقطع رقم="٨٨">وَلَوْ فَعَلُوْا كَاْنَ قِيَاْسًا وَلَٰكِنِّي لَمْ أَسْمَعْهُ</مقطع>
       <مقطع رقم="٨٩">وَقَاْلُوْا <اسم>عَصًى</اسم> وَ<اسم عدد="٤">أُعْصٍ</اسم> كَمَا قَاْلُوْا <اسم عدد="٤">أَزْمُنٌ</اسم>
      </مقطع>
       <مقطع رقم="٩٠">وَقَاْلُوْا <اسم عدد="٤">عُصِيٌّ</اسم> كَمَا قَاْلُوْا <اسم عدد="٤">أُسُوْدٌ</اسم>
      </مقطع>
       <مقطع رقم="٩١">وَلَا نَعْلَمُهُمْ قَاْلُوْا <اسم عدد="٤">أَعْصَاْءُ</اسم> جَعَلُوْا <اسم عدد="٤">أُعْصٍ</اسم> بَدَلًا مِنْ <اسم عدد="٤">أَعْصَاْءٍ</اسم>
      </مقطع>
       <مقطع رقم="٩٢">جَعَلُوْا هٰذَا بَدَلًا مِنْهُا</مقطع>
       <مقطع رقم="٩٣">وَتَقُوْلُ فِي الْمُضَاْعَفِ <اسم>لَبَبٌ</اسم> وَ<اسم عدد="٤">أَلْبَاْبٌ</اسم>
      </مقطع>
       <مقطع رقم="٩٤">وَ<اسم>مَدَدٌ</اسم> وَ<اسم عدد="٤">أَمْدَاْدٌ</اسم>
      </مقطع>
       <مقطع رقم="٩٥">وَ<اسم>فَنَنٌ</اسم> وَ<اسم عدد="٤">أَفْنَاْنٌ</اسم>
      </مقطع>
       <مقطع رقم="٩٦">وَلَمْ يُجَاوِزُوا الـ<مثل>أَفْعَاْلَ</مثل> كَمَا لَمْ يُجَاوِزُوا الْـ<مثل>أَقْدَاْمَ</مثل> وَالْـ<مثل>أَرْسَاْنَ</مثل> وَالْـ<مثل>أَغْلَاقَ</مثل>
      </مقطع>
       <مقطع رقم="٩٧">وَالثَّبَاْتُ فِي بَاْبِ <مثل>فَعَلٍ</مثل> عَلَى الـ<مثل>أَفْعَاْلِ</مثل> أَكْثَرُ مِنَ الثَّبَاْتِ فِي بَاْبِ <مثل>فَعْلٍ</مثل> عَلَى الـ<مثل>أَفْعُلِ</مثل>
      </مقطع>
       <مقطع رقم="٩٨">فَإِنْ بُنِيَ الْمُضَاْعَفُ عَلَى <مثل>فِعَاْلٍ</مثل> أَوْ <مثل>فُعُوْلٍ</مثل> أَوْ <مثل>فِعْلَاْنٍ</مثل> أَوْ <مثل>فُعْلَاْنٍ</مثل> فَهُوَ الْقِيَاْسُ عَلَى مَا ذَكَرْنَا</مقطع>
       <مقطع رقم="٩٩">كَمَا جَاْءَ الْمُضَاْعَفُ فِي بَاْبِ <مثل>فَعْلٍ</مثل> عَلَى قَيَاْسِ غَيْرِ الْمُضَاْعَفِ</مقطع>
       <مقطع رقم="١٠٠">فَكُلُّ شَيْءٍ دَخَلَ الْمُضَاْعَفَ مِمَّا دَخَلَ الْأَوَّلَ فَهُوَ لَهُ نَظِيْرٌ</مقطع>
       <مقطع رقم="١٠١">وَقَاْلُوْا الْـ<اسم عدد="٤">حِجَاْر</اسم> فَجَاْءَوْا بِهِ عَلَى الْأَكْثَرِ وَالْأَقْيَسِ وَهُوَ فِي الْكَلَامِ قَلِيْلٌ</مقطع>
       <مقطع رقم="١٠٢">قَاْلَ الشَّاْعِرُ</مقطع>
       <شاهدة رقم="٦" xml:id="٤١٦-٦">
          <بيت>
             <مصراع>كَأَنَّهَا مِنْ حِجاْرِ الْغَيْلِ أَلَبَسَها</مصراع>
             <مصراع>مَضاْرِبُ الْماْءِ لَوْنَ الطُّحْلُبِ اللَّزِبِ</مصراع>
         </بيت>
      </شاهدة>
   </جزء>
    <جزء رقم="٣" هو="٣">
       <عنوان>بَاْبُ فَعِل</عنوان>
       <هارون مجلد="٣" صفحة="٥٧٢"/>
       <مقطع رقم="١٠٣">وَمَا كَاْنَ عَلَى ثَلَاْثَةِ أَحْرُفٍ وَكَاْنَ <مثل>فَعِلًا</مثل> فَإِنَّمَا تُكَسِّرُهُ مِنْ أَبْنِيَةِ أَدْنَى الْعَدَدِ عَلَى <مثل>أَفْعَالٍ</مثل>
      </مقطع>
       <مقطع رقم="١٠٤">وَذَٰلِكَ نَحْوُ كَتِفٍ وَأَكْتَافٍ وَكَبِدٍ وَأَكْبَاْدٍ وَفَخِذٍ وَأَفْخَاْذٍ وَنَمِرٍ وَأَنْمَاْرٍ</مقطع>
       <مقطع رقم="١٠٥">وَقَلَّمَا يُجَاوِزُونَ بِهِ لِأَنَّ هَٰذَا الْبِنَاْءَ نَحْوُ كَتِفٍ أَقَلَّ مِنْ <مثل>فَعْلٍ</مثل> بِكَثِيْرٍ</مقطع>
       <مقطع رقم="١٠٦">كَمَا أَنَّ <مثل>فَعَلًا</مثل> أَقَلُّ مِنْ <مثل>فَعْلٍ</مثل>
      </مقطع>
       <مقطع رقم="١٠٧">أَلَا تَرَى أَنَّ مَا لَزِمَ مِنْهُ بِنَاْءَ الْأَقَلِّ أَكْثَرُ</مقطع>
       <مقطع رقم="١٠٨">فَلَمْ يُفْعَلْ بِهِ مَا فُعِلَ بِـ<مثل>فَعَلٍٍ</مثل> إذْ لَمْ يَكُنْ كَثِيْرًا مِثْلَهُ</مقطع>
       <مقطع رقم="١٠٩">كَمَا لَمْ يَجِيْءْ فِي مُضَاْعِفِ <مثل>فَعَلٍ</مثل> مَا جَاْءَ فِي مُضَاْعَفِ <مثل>فَعْلٍ</مثل> لِقِلَّتِهِ</مقطع>
       <مقطع رقم="١١٠">وَلَمْ يَجِيْءْ فِي بَنَاْتِ الْيَاْءِ وَالْوَاْوِ مِنْ <مثل>فَعِلٍ</مثل> جَمِيْعُ مَا جَاْءَ مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ مِنْ <مثل>فَعَلٍ</مثل> لِقِلَّتِهَا</مقطع>
       <مقطع رقم="١١١">وَهِيَ عَلَى ذَٰلِكَ أَكْثَرُ مِنَ الْمُضَاْعَفِ</مقطع>
       <مقطع رقم="١١٢">وَذَٰلِكَ أَنَّ <مثل>فَعَلًا</مثل> أَكْثَرُ مِنْ <مثل>فَعِلٍ</مثل>
      </مقطع>
       <مقطع رقم="١١٣">وَقَدْ قَاْلُوْا <اسم عدد="٤">النّمُورُ</اسم> وَ<اسم عدد="٤">الْوَعُولُ</اسم>
      </مقطع>
       <مقطع رقم="١١٤">شَبَّهُوْهَا بِـ<اسم عدد="٤">الْأُسُوْدِ</اسم>
      </مقطع>
       <مقطع رقم="١١٥">وَهَٰذَا النَحْوُ قَلِيْلٌ فَلَمَّا جَاْزَ لَهُمْ أَنْ يُثْبِتُوا فِي الْأَكْثَرِ عَلَى <مثل>أَفْعَاْلٍ</مثل> كَاْنَوا لَهُ فِي الْأَقَلِّ أَلْزَمَ</مقطع>
   </جزء>

