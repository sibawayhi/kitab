<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٢١"
     درنبورج="١-١٦"
     هارون="١-٤٥"
     يعقوب="١-٨٢"
     البكاء="١-١٠٤"
     رقم="١٧">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ الْفِعْلِ</مقطع>
       <مقطع رقم="٢">الَّذِيْ يَتَعَدَّى ٱسْمَ الْفَاْعِلِ إِلَى الْمَفْعُوْلِ</مقطع>
       <مقطع رقم="٣">وَٱسْمُ الْفَاْعِلِ وَالْمَفْعُوْلِ فِيْهِ لِشَيْءٍ وَاْحِدٍ</مقطع>
    </عنوان>

    <!-- كَاْنَ وَأَخُوتهَا -->

    <مقطع رقم="٤">فَمِنْ ثَمَّ ذُكِرَ عَلَى حِدَتِهِ</مقطع>
    <مقطع رقم="٥">وَلَمْ يُذْكَرْ مَعَ الْأَوَّلِ</مقطع>
    <مقطع رقم="٦">وَلَا يَجُوْزُ فِيْهِ الِاقْتِصَاْرُ عَلَى الْفَاْعِلِ</مقطع>
    <مقطع رقم="٧">كَمَا لَمْ يَجُزْ فِي <حرف>ظَنَنْتُ</حرف>
   </مقطع>
    <مقطع رقم="٨">الِاقْتِصَاْرُ عَلَى الْمَفْعُوْلِ الْأَوَّلِ</مقطع>
    <مقطع رقم="٩">لِأَنَّ حَالُكَ فِي الِاحْتِيَاْجِ إِلَى الْآخِرِ هٰهُنَا</مقطع>
    <مقطع رقم="١٠">كَحَالِكَ فِي الِاحْتِيَاْجِ إِلَيْهِ ثَمَّةَ</مقطع>
    <مقطع رقم="١١">وَسَنُبَيِّنُ لَكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
    <مقطع رقم="١٢">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٣">
        <حرف>كَانَ</حرف> وَ<حرف>يَكُوْنُ</حرف> وَ<حرف>صَاْرَ</حرف> وَ<حرف>مَا دَامَ</حرف> وَ<حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="١٤">وَمَا كَانَ نَحْوَهُنَّ مِنْ الِفِعْلِ</مقطع>
    <مقطع رقم="١٥">مِمَّا لَا يَسْتَغْنِي عَنْ الْخَبَرِ</مقطع>
    <مقطع رقم="١٦">تَقُوْلُ  <قول>كَانَ عَبْدُ اللّٰهِ أَخَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٧">فَإِنَّمَا أَرَدْتَ أَنْ تُخْبِرَ عَنْ الْأُخُوَّةِ</مقطع>
    <مقطع رقم="١٨">وَأَدْخَلْتَ  <حرف>كَانَ</حرف> لِتَجْعَلَ ذٰلِكَ فِيْمَا مَضَىْ</مقطع>
    <مقطع رقم="١٩">وَذَكَرْتَ الْأَوَّلَ</مقطع>
    <مقطع رقم="٢٠">كَمَا ذَكَرْتَ الْمَفْعُوْلَ الْأَوَّلَ</مقطع>
    <مقطع رقم="٢١">مِنْ  <حرف>ظَنَنْتُ</حرف>
   </مقطع>
    <مقطع رقم="٢٢">وَإِنْ شِئْتَ قُلْتَ</مقطع>
    <مقطع رقم="٢٣">
        <قول>كَانَ أَخَاكَ عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٢٤">فَقَدَّمْتَ وَأَخَّرْتَ</مقطع>
    <مقطع رقم="٢٥">كَمَا فَعَلْتَ ذٰلِكَ فِي  <حرف>ضَرَبَ</حرف>
   </مقطع>
    <مقطع رقم="٢٦">لِأَنَّهُ فِعْلٌ مِثْلُهُ</مقطع>
    <مقطع رقم="٢٧">وَحَالُ التَّقْدِيْمِ وَالتَّأْخِيْرِ فِيْهِ</مقطع>
    <مقطع رقم="٢٨">كَحَالِهِ فِي  <حرف>ضَرَبَ</حرف>
   </مقطع>
    <مقطع رقم="٢٩">إِلَّا أَنَّ ٱسْمَ الْفَاْعِلِ وَالْمَفْعُوْلِ فِيْهِ لِشَيْءٍ وَاْحِدٍ</مقطع>
    <هارون مجلد="١" صفحة="٤٥"/>
    <مقطع رقم="٣٠">وَتَقُوْلُ  <قول>كُنَّاهُمْ</قول>
   </مقطع>
    <مقطع رقم="٣١">كَمَا تَقُوْلُ  <قول>ضَرَبْنَاهُمْ</قول>
   </مقطع>
    <مقطع رقم="٣٢">وَتَقُوْلُ  <قول>إِذَا لَمْ نَكُنْهُمْ فَمَنْ ذَا يَكُوْنُهُمْ</قول>
   </مقطع>
    <مقطع رقم="٣٣">كَمَا تَقُوْلُ  <قول>إِذَا لَمْ نَضْرِبُهُمْ فَمَنْ يَضْرِبُهُمْ</قول>
   </مقطع>
    <مقطع رقم="٣٤">قَالَ أَبُوْ الْأَسْوَدِ الْدُّؤَلِىِّ</مقطع>
    <شاهدة رقم="١" xml:id="١٧-١">
       <بيت>
          <مصراع>فَإِنْ لَا يَكُنْهَا أَوْ تَكُنْهُ فَإِنَّهُ</مصراع>
          <مصراع>أَخُوْهَا غَذَتْهُ أُمُّهُ بِلَبَانِهِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٣٥">فَهُوَ كَاْئِنْ وَمَكُوْنٌ</مقطع>
    <مقطع رقم="٣٦">كَمَا تَقُوْلُ  <قول>ضَاْرِبٌ وَمَضْرُوبٌ</قول>
   </مقطع>
    <مقطع رقم="٣٧">وَقَدْ يَكُوْنُ لِـ<حرف>كَانَ</حرف> مَوْضِعٌ آخَرُ</مقطع>
    <مقطع رقم="٣٨">يَقْتَصِرُ عَلَى الْفَاْعِلِ فِيْهِ</مقطع>
    <مقطع رقم="٣٩">تَقُوْلُ  <قول>قَدْ كَانَ عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٤٠">أَيْ  <قول>قَدْ خُلِقَ عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٤١">وَ<قول>قَدْ كَانَ الْأَمْرُ</قول>
   </مقطع>
    <مقطع رقم="٤٢">أَيْ  <قول>وَقَعَ الْأَمْرُ</قول>
   </مقطع>
    <مقطع رقم="٤٣">وَ<قول>قَدْ دَامَ فُلَانٌ</قول>
   </مقطع>
    <مقطع رقم="٤٤">أَيْ  <قول>ثَبَتَ</قول>
   </مقطع>
    <مقطع رقم="٤٥">كَمَا تَقُوْلُ  <قول>رَأَيْتُ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٤٦">تُرِيْدُ رُؤْيَةَ الْعَيْنِ</مقطع>
    <مقطع رقم="٤٧">وَكَمَا تَقُوْلُ  <قول>أَنَا وَجَدْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٤٨">تُرِيْدُ وَِجْدَانَ الضَّالَّةِ</مقطع>
    <مقطع رقم="٤٩">وَكَمَا يَكُوْنُ  <حرف>أَصْبَحَ</حرف> وَ<حرف>أَمْسْى</حرف>
   </مقطع>
    <مقطع رقم="٥٠">مَرَّةً بِمَنْزِلَةِ  <حرف>كَانَ</حرف>
   </مقطع>
    <مقطع رقم="٥١">وَمَرَّةً بِمَنْزِلَةِ قَوْلِكَ  <حرف>أَسْتَيْقِظُوا</حرف> وَ<حرف>نَامُوْا</حرف>
   </مقطع>
    <مقطع رقم="٥٢">فَأَمَّا  <حرف>لَيْسَ</حرف>
   </مقطع>
    <مقطع رقم="٥٣">فَإَّنهُ لَا يَكُوْنُ فِيْهَا ذٰلِكَ</مقطع>
    <مقطع رقم="٥٤">لِأَنَّهَا وَُضِعَتْ مَوْضِعًا وَاْحِدًا</مقطع>
    <مقطع رقم="٥٥">وَمِنْ ثَمَّ لَمْ يَتَصَرَّفْ تَصَرُّفَ الْفِعْلِ الْآخَرِ</مقطع>
    <مقطع رقم="٥٦">فَمِمَّا جَاْءَ عَلَى  <حرف>وَقَعَ</حرف>
   </مقطع>
    <مقطع رقم="٥٧">قَوْلُهُ وَهُوَ مَقَّاْسٌ الْعَاْئَذِىْ</مقطع>
    <هارون مجلد="١" صفحة="٤٦"/>
    <شاهدة رقم="٢" xml:id="١٧-٢">
       <بيت>
          <مصراع>فَِدّى لُبَنّىْ ذُهْلِ بْنِ شَيْبَانَ نَاقَتَىْ</مصراع>
          <مصراع>إِذَا كَانَ يَوْمٌ ذُوْ كَوَاكِبَ أَشْهَبُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٥٨">أَيْ  <حرف>إِذَا وَقَعَ</حرف>
   </مقطع>
    <مقطع رقم="٥٩">وَقَالَ الْآخَرُ عَمْرِوٍ بِنُ شَأْسٍ</مقطع>
    <شاهدة رقم="٣" xml:id="١٧-٣">
       <بيت>
          <مصراع>بَنِىٓ أَسَدٍ هَلْ تَعْلَمُوْنَ بَلَاءَنَا</مصراع>
          <مصراع>إِذَا كَانَ يَوْمَا ذَا كَوَاكِبَ أَشْنَعَا</مصراع>
      </بيت>
       <بيت>
          <مصراع>إِذَا كَانَتْ الْحُوُّ الْطِّوَالُ كَأَنَّمَا</مصراع>
          <مصراع>كَسَاهَا السِّلَاحُ الْأُرْجُوَانَ الْمُضَلَّعَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٦٠">أَضْمَرَ لِعِلْمِ الْمُخَاْطَبِ بِمَا يَعْنِي</مقطع>
    <مقطع رقم="٦١">وَهُوَ<حرف>الْيَوْمُ</حرف>
   </مقطع>
    <مقطع رقم="٦٢">وَسَمِعْتُ بَعْضَ الْعَرَبِ يَقُوْلُ  <حرف>أَشْنَعَا</حرف>
   </مقطع>
    <مقطع رقم="٦٣">وَيَرْفَعُ مَا قَبْلَهُ كَأَنَّهُ قَالَ</مقطع>
    <مقطع رقم="٦٤">
        <قول>إِذَا وَقَعَ يَوْمَ ذُوْ كَوَاكِبَ أَشْنَعَا</قول>
   </مقطع>
    <مقطع رقم="٦٥">وَاْعْلَمْ أَنَّهُ إِذَا وَقَعَ فِي هٰذَا الْبَاْبِ نَكِرَةٌ وَمَعْرِفَةٌ</مقطع>
    <مقطع رقم="٦٦">فَالَّذِي تَشْغَلُ بِهِ كَانَ الْمَعْرِفَةُ</مقطع>
    <مقطع رقم="٦٧">لِأَنَّهُ حَدُّ الْكَلَامِ</مقطع>
    <مقطع رقم="٦٨">لِأَنَّهُمَا شَيءٌ وَاْحِدٌ</مقطع>
    <مقطع رقم="٦٩">وَلَيْسَ بِمَنْزِلَةِ قَوْلِكَ</مقطع>
    <مقطع رقم="٧٠">
        <قول>ضَرَبَ رَجُلٌ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٧١">لِأَنَّهُمَا شَيْئَانِ مُخْتَلِفَانِ</مقطع>
    <مقطع رقم="٧٢">وَهُمَا فِي  <حرف>كَانَ</حرف>
   </مقطع>
    <مقطع رقم="٧٣">بِمَنْزِلَتِهِمَا فَيِ الِابْتِدَاْءِ</مقطع>
    <مقطع رقم="٧٤">إِذَا قُلْتَ  <قول>عَبْدُ اللّٰهِ مُنْطَلِقٌ</قول>
   </مقطع>
    <مقطع رقم="٧٥">تَبْتَدِئُ بِالْأَعْرَفِ ثُمَّ تَذْكُرُ الْخَبَرَ</مقطع>
    <مقطع رقم="٧٦">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٧٧">
        <قول>كَانَ زَيْدٌ حَلِيْمًا</قول>
   </مقطع>
    <مقطع رقم="٧٨">وَ<قول>كَانَ حَلِيْمًا زِيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٧٩">لَا عَلَيْكَ أَقَدَّمْتَ أَمْ أَخَّرْتَ</مقطع>
    <مقطع رقم="٨٠">إِلَا أَنَّهُ عَلَى مَا وَصَفْتُ لَكَ فِي قَوْلِكَ</مقطع>
    <مقطع رقم="٨١">
        <قول>ضَرَبَ زَيْدًا عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٨٢">فَإِذَا قُلْتَ  <قول>كَانَ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٨٣">فَقَدْ ابْتَدَأْتَ بِمَا هُوَ مَعْرُوْفٌ <هارون مجلد="١" صفحة="٤٧"/>عِنْدَهُ</مقطع>
    <مقطع رقم="٨٤">مِثْلَهُ عِنْدَكَ</مقطع>
    <مقطع رقم="٨٥">فَإِنَّمَا يَنْتَظِرُ الْخَبَرَ</مقطع>
    <مقطع رقم="٨٦">فَإِذَا قُلْتَ  <حرف>حَلِيْمًا</حرف>
   </مقطع>
    <مقطع رقم="٨٧">فَقَدْ أَعْلَمْتَهُ مِثْلَ مَا عَلِمْتَ</مقطع>
    <مقطع رقم="٨٨">فَإِذَا قُلْتَ  <قول>كَانَ حَلِيْمًا</قول>
   </مقطع>
    <مقطع رقم="٨٩">فَإِنَّمَا يَنتَظِرُ أَنْ تُعَرِّفَهُ صَاْحِبَ الصِّفَةِ</مقطع>
    <مقطع رقم="٩٠">فَهُوَ مَبْدُوءٌ فِي الْفِعْلِ</مقطع>
    <مقطع رقم="٩١">وَإِنْ كَانَ مُؤَخَّرًا فِي اللَّفْظِ</مقطع>
    <مقطع رقم="٩٢">فَإِنْ قُلْتَ  <قول>كَانَ حَلِيْمٌ</قول> أَوْ  <حرف>رَجُلٌ</حرف>
   </مقطع>
    <مقطع رقم="٩٣">فَقَدْ بَدَأْتَ بِنَكِرَةٍ</مقطع>
    <مقطع رقم="٩٤">وَلَا يَسْتَقِيْمُ أَنْ تُخْبِرَ الْمُخَاْطَبَ عَنْ الْمَنْكُورَ</مقطع>
    <مقطع رقم="٩٥">وَلَيْسَ هٰذَا بِالَّذِي يَنْزِلُ بِهِ الْمُخَاْطَبُ</مقطع>
    <مقطع رقم="٩٦">مَنْزِلَتَكَ فِي الْمَعْرِفَةِ</مقطع>
    <مقطع رقم="٩٧">فَكَرِهُوا أَنْ يَقْرَبُوا بَاْبَ لَبْسٍ</مقطع>
    <مقطع رقم="٩٨">وَقَدْ تَقُوْلُ  <قول>كَانَ زَيْدٌ الطَّوَيلُ مُنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="٩٩">إِذَا خِفْتَ الْتِبَاْسَ الْزَيْدَيْنِ</مقطع>
    <مقطع رقم="١٠٠">وَتَقُوْلُ  <قول>أَسَفِيْهًا كَانَ زَيْدٌ أَمْ حَلِيْمًا</قول>
   </مقطع>
    <مقطع رقم="١٠١">وَ<قول>أَرَجُلًا كَانَ زَيْدٌ أَمْ صَبِيًّا</قول>
   </مقطع>
    <مقطع رقم="١٠٢">تَجْعَلُهَا لِـ<حرف>زَيْدٍ</حرف>
   </مقطع>
    <مقطع رقم="١٠٣">لِأَنَّهُ إِنَّمَا يَنْبَغِي لَكَ</مقطع>
    <مقطع رقم="١٠٤">أَنْ تَسْأَلَهُ عَنْ خَبَرِ مَنْ هُوَ مَعْرُوْفٌ عِنْدَهُ</مقطع>
    <مقطع رقم="١٠٥">كَمَا حَدَّثْتَهُ عَنْ خَبَرِ مَنْ هُوَ مَعْرُوْفٌ عِنْدَكَ</مقطع>
    <مقطع رقم="١٠٦">فَالْمَعْرُوْفُ هُوَ الْمَبْدُوءُ بِهِ</مقطع>
    <مقطع رقم="١٠٧">وَلَا يُبْدَأُ بِمَا يَكُوْنُ فِيْهِ اللَّبْسُ</مقطع>
    <مقطع رقم="١٠٨">وَهُوَ النَّكِرَةُ</مقطع>
    <مقطع رقم="١٠٩">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ</مقطع>
    <مقطع رقم="١١٠">
        <قول>كَانَ إِنْسَانٌ حَلِيْمًا</قول>
   </مقطع>
    <مقطع رقم="١١١">أَوْ  <قول>كَانَ رَجُلٌ مَنْطَلِقًا</قول>
   </مقطع>
    <مقطع رقم="١١٢">كُنْتَ تُلْبِسُ</مقطع>
    <مقطع رقم="١١٣">لِأَنَّهُ لَا يُسْتَنْكَرُ</مقطع>
    <مقطع رقم="١١٤">أَنْ يَكُوْنَ فِي الْدُّنْيَا</مقطع>
    <مقطع رقم="١١٥">إِنْسَانٌ هَكَذَا</مقطع>
    <مقطع رقم="١١٦">فَكَرِهُوا أَنْ يَبْدَءُوا بِمَا فِيْهِ اللَّبْسُ</مقطع>
    <مقطع رقم="١١٧">وَيَجْعَلُوْا الْمَعْرِفَةَ خَبَرًا</مقطع>
    <مقطع رقم="١١٨">لِمَا يَكُوْنُ فِيْهِ هٰذَا اللَّبْسُ</مقطع>
    <مقطع رقم="١١٩">وَقَدْ يَجُوْزُ فِي الشِّعْرِ</مقطع>
    <مقطع رقم="١٢٠">وَفِيْ ضَعْفٍ مِنْ الْكَلَامِ</مقطع>
    <مقطع رقم="١٢١">حَمَلَهُمْ عَلَى ذٰلِكَ</مقطع>
    <مقطع رقم="١٢٢">أَنَّهُ فِعْلٌ بِمَنْزِلَةِ  <حرف>ضَرَبَ</حرف>
   </مقطع>
    <مقطع رقم="١٢٣">وَأَنَّهُ قَدْ يُعْلَمُ إِذَا ذَكَرْتَ زَيْدًا وَجَعَلْتُهُ خَبَرًا</مقطع>
    <مقطع رقم="١٢٤">أَنَّهُ صَاْحِبُ الصِّفَةِ</مقطع>
    <مقطع رقم="١٢٥">عَلَى ضَعْفٍ مِنَ الْكَلَامِ</مقطع>
    <مقطع رقم="١٢٦">وَذٰلِكَ قَوْلُ خِدَاْشٍ بْنِ زُهَيْرٍ</مقطع>
    <شاهدة رقم="٤" xml:id="١٧-٤">
       <بيت>
          <مصراع>فَإِنَّكَ لَا تُبَالِيْ بَعْدَ حَوْلٍ</مصراع>
          <مصراع>أظُّبَىْ كَانَ أُمُّكَ أَمْ حِمَاْرُ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٤٨"/>
    <مقطع رقم="١٢٧">وَقَالَ حَسَّانُ بْنُ ثَاْبِتٍ</مقطع>
    <شاهدة رقم="٥" xml:id="١٧-٥">
       <بيت>
          <مصراع>كَأَنَّ سَبِيْئَةً مِنْ بَيْتِ رَأْسِ</مصراع>
          <مصراع>يَكُوْنُ مِزَاْجَهَا عَسَلٌ وَمَاْءُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٢٨">وَقَالَ أَبُوْ قَيْسِ بْنُ الْأَسْلَتِ الْأَنْصَاْرِيِّ</مقطع>
    <شاهدة رقم="٦" xml:id="١٧-٦">
       <بيت>
          <مصراع>أَلَا مَنْ مُبْلِغٌ حَسَّانَ عَنِّيْ</مصراع>
          <مصراع>أَسِحْرٌ كَانَ طِبَّكَ أَمْ جُنُوْنُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٢٩">وَقَالَ الْفَرَزْدَقُ</مقطع>
    <شاهدة رقم="٧" xml:id="١٧-٧">
       <بيت>
          <مصراع>أَسَكْرَانُ كَانَ ابْنَ الْمَرَاْغَةً إِذْ هَجَا</مصراع>
          <مصراع>تَمِيْمَا بِجَوْفِ الشَّامِ أَمْ مُتَسَاكِرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٣٠">فَهٰذَا إِنْشَاْدُ بَعْضِهِمْ</مقطع>
    <مقطع رقم="١٣١">وَأَكْثَرُهُمْ يَنْصِبُ السَّكْرَانَ وَيَرْفَعُ الْآخِرَ</مقطع>
    <مقطع رقم="١٣٢">عَلَى قَطْعٍ وَاْبْتِدَاْءٍ</مقطع>
    <مقطع رقم="١٣٣">وَإِذَا كَانَا مَعْرِفَةً</مقطع>
    <مقطع رقم="١٣٤">فَأَنْتَ بِالْخِيَاْرِ</مقطع>
    <مقطع رقم="١٣٥">أَيُّهُمَا مَا جَعَلْتَهُ فَاْعِلًا</مقطع>
    <مقطع رقم="١٣٦">رَفَعْتَهُ وَنَصَبْتَ <هارون مجلد="١" صفحة="٤٩"/>الْآخَرَ</مقطع>
    <مقطع رقم="١٣٧">كَمَا فَعَلْتَ ذٰلِكَ فِي  <حرف>ضَرَبَ</حرف>
   </مقطع>
    <مقطع رقم="١٣٨">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٣٩">
        <قول>كَانَ أَخُوْكَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١٤٠">وَ<قول>كَانَ زَيْدٌ صَاْحِبَكَ</قول>
   </مقطع>
    <مقطع رقم="١٤١">وَ<قول>كَانَ هٰذَا زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١٤٢">وَ<قول>كَانَ الْمُتَكَلِّمُ أَخَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٤٣">وَتَقُوْلُ  <قول>مَنْ كَانَ أَخَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٤٤">وَ<قول>مَنْ كَانَ أَخُوْكَ</قول>
   </مقطع>
    <مقطع رقم="١٤٥">كَمَا تَقُوْلُ  <قول>مَنْ ضَرَبَ أَبَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٤٦">إِذَا جَعَلْتَ  <حرف>مَنْ</حرف> الْفَاْعِلَ</مقطع>
    <مقطع رقم="١٤٧">وَ<قول>مَنْ ضَرَبَ أَبُوْكِ</قول>
   </مقطع>
    <مقطع رقم="١٤٨">إِذَا جَعَلْتَ الْـ<حرف>أَبَ</حرف> الْفَاْعِلَ</مقطع>
    <مقطع رقم="١٤٩">وَكَذٰلِكَ  <قول>أَيُّهُمْ كَانَ أَخَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٥٠">وَ<قول>أَيَّهُمْ كَانَ أَخُوْكَ</قول>
   </مقطع>
    <مقطع رقم="١٥١">وَتَقُوْلُ  <قول>مَا كَانَ أَخَاكَ إِلَّا زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="١٥٢">كَقَوْلِكَ  <قول>مَا ضَرَبَ أَخَاكَ إِلَّا زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="١٥٣">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
    <مقطع رقم="١٥٤">
        <آية>مَا كَانَ حُجَّتَهُمْ إِلَّا أَنْ قَالُوْا</آية>
   </مقطع>
    <مقطع رقم="١٥٥">وَ<آية>وَمَا كَانَ جَوَاْبَ قَوْمِهِ إِلَا أَنْ قَالُوْا</آية>
   </مقطع>
    <مقطع رقم="١٥٦">وَقَالَ الشَّاْعِرُ</مقطع>
    <شاهدة رقم="٨" xml:id="١٧-٨">
       <بيت>
          <مصراع>وَقَدْ عَلِمَ الْأَقْوَامُ مَا كَانَ دَاْئِهَا</مصراع>
          <مصراع>بِثَهْلانَ إِلَا الْخِزْىُ مِمَّنْ يَقُوْدُهَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٥٧">وَإِنْ شِئْتَ رَفَعْتَ الْأَوَّلَ</مقطع>
    <مقطع رقم="١٥٨">كَمَا تَقُوْلُ  <قول>مَا ضَرَبَ أَخُوْكَ إِلَّا زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١٥٩">وَقَدْ قَرَأَ بَعْضُ الْقُرَّاْءِ</مقطع>
    <مقطع رقم="١٦٠">مَا ذَكَرْنَا بِالرَّفْعِ</مقطع>
    <مقطع رقم="١٦١">وَمِثْلُ قَوْلِهِمْ  <قول>مَنْ كَانَ أَخَاكَ</قول>
   </مقطع>
    <مقطع رقم="١٦٢">قُوْلُ الْعَرَبِ  <قول>مَا جَاْءَتْ حَاْجَتَكَ</قول>
   </مقطع>
    <مقطع رقم="١٦٣">كَأَنَّهُ قَالَ  <قول>مَا صَاْرَتْ حَاْجَتَكَ</قول>
   </مقطع>
    <مقطع رقم="١٦٤">وَلَكِنَّهُ أَدْخَلَ التَّأْنِيْثَ عَلَى  <حرف>مَا</حرف>
   </مقطع>
    <مقطع رقم="١٦٥">حَيْثُ كَانَتِ <هارون مجلد="١" صفحة="٥٠"/>الْحَاْجَةُ</مقطع>
    <مقطع رقم="١٦٦">كَمَا قَالَ بَعْضُ الْعَرَبِ</مقطع>
    <مقطع رقم="١٦٧">
        <قول>مَنْ كَانَتْ أُمَّكَ</قول>
   </مقطع>
    <مقطع رقم="١٦٨">حَيْثُ أَوْقَعَ  <حرف>مَنْ</حرف> عَلَى مُؤَنَّثٍ</مقطع>
    <مقطع رقم="١٦٩">وَإِنَّمَا صَيِّرَ  <حرف>جَاْءَ</حرف>
   </مقطع>
    <مقطع رقم="١٧٠">بِمَنْزِلَةِ  <حرف>كَانَ</حرف>
   </مقطع>
    <مقطع رقم="١٧١">فَِي هٰذَا الْحَرْفِ وَحْدَهُ</مقطع>
    <مقطع رقم="١٧٢">لِأَنَّهُ بِمَنْزِلَةِ الْمَثَلِ</مقطع>
    <مقطع رقم="١٧٣">كَمَا جَعَلُوا  <حرف>عَسَى</حرف> بِمَنْزِلَةِ  <حرف>كَانَ</حرف> فِي قَوْلِهِمْ</مقطع>
    <شاهدة رقم="٩" xml:id="١٧-٩">
       <بيت>
          <مصراع>عَسَى الْغُوَيْرُ أَبْؤُسا</مصراع>
          <مصراع/>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٧٤">وَلَا يُقَالُ  <قول>عَسَيْتَ أَخَانَا</قول>
   </مقطع>
    <مقطع رقم="١٧٥">وَكَمَا جَعَلُوا  <حرف>لَدُنْ</حرف> مَعَ  <حرف>غُدْوَةَ</حرف> مُنَوَّنَةً فِي قَوْلِهِمْ</مقطع>
    <مقطع رقم="١٧٦">
        <قول>لَدُنْ غُدْوَةً</قول>
   </مقطع>
    <مقطع رقم="١٧٧">وَمِنْ كَلَامِهِمْ أَنْ يَجْعَلُوْا الشَّيءَ فِي مَوْضِعٍ</مقطع>
    <مقطع رقم="١٧٨">عَلَى غَيْرِ حَالِهِ فِي سَاْئِرِ الْكَلَامِ</مقطع>
    <مقطع رقم="١٧٩">وَسَتَرَى مِثْلَ ذٰلِكَ إِنْ شَاْءَ اللّٰهُ</مقطع>
    <مقطع رقم="١٨٠">وَمَنْ يَقُوْلُ مَنْ الْعَرَبِ</مقطع>
    <مقطع رقم="١٨١">
        <قول>مَا جَاْءَتْ حَاْجَتُكَ</قول>
   </مقطع>
    <مقطع رقم="١٨٢">كَثِيرٌ</مقطع>
    <مقطع رقم="١٨٣">كَمَا يَقُوْلُ  <قول>مَنْ كَانَتْ أُمُّكَ</قول>
   </مقطع>
    <مقطع رقم="١٨٤">وَلَمْ يَقُوْلُوْا  <قول>مَا جَاْءَ حَاْجَتَكَ</قول>
   </مقطع>
    <مقطع رقم="١٨٥">كَمَا قَالُوْا  <قول>مَنْ كَانَ أُمَّكَ</قول>
   </مقطع>
    <مقطع رقم="١٨٦">لِأَنَّهُ بِمَنْزِلَةِ الْمَثَلِ</مقطع>
    <مقطع رقم="١٨٧">فَأَلْزَمُوْهُ التَّاْءَ</مقطع>
    <مقطع رقم="١٨٨">كَمَا اتَّفَقُوْا عَلَى</مقطع>
    <مقطع رقم="١٨٩">
        <قول>لَعَمْرُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="١٩٠">فَِي الْيَمِيْنِ</مقطع>
    <مقطع رقم="١٩١">وَزَعَمَ يُوْنُسُ أَنَّهُ سَمِعَ رُؤْبَةُ يَقُوْلُ</مقطع>
    <مقطع رقم="١٩٢">
        <قول>مَا جَاْءَتْ حَاْجَتُكَ</قول>
   </مقطع>
    <مقطع رقم="١٩٣">فَيَرْفَعُ</مقطع>
    <مقطع رقم="١٩٤">وَمِثْلُ قَوْلِهِمْ</مقطع>
    <مقطع رقم="١٩٥">
        <قول>مَا جَاْءَتْ حَاْجَتَكَ</قول>
   </مقطع>
    <مقطع رقم="١٩٦">إِذْ صَاْرَتْ تَقَعُ عَلَى مُؤَنَّثٍ</مقطع>
    <مقطع رقم="١٩٧">قَرَاْءَةُ بَعْضِ الْقُرَّاْءِ</مقطع>
    <مقطع رقم="١٩٨">
        <آية>ثُمَّ لَمْ تَكُنْ فِتْنَتُهُمْ إِلَّا أَنَّ قَالُوْا</آية>
   </مقطع>
    <مقطع رقم="١٩٩">وَ<آية>تَلْتَقِطْهُ بَعْضُ السَّيَّاْرَةِ</آية>
   </مقطع>
    <مقطع رقم="٢٠٠">وَرُبَّمَا قَالُوْا فِي بَعْضِ الْكَلَامِ</مقطع>
    <مقطع رقم="٢٠١">
        <قول>ذَهَبَتْ بَعْضُ أَصَاْبِعِهِ</قول>
   </مقطع>
    <مقطع رقم="٢٠٢">وَإِنَّمَا أَنَّثَ الْـ<حرف>بَعْضَ</حرف>
   </مقطع>
    <مقطع رقم="٢٠٣">لِأَنَّهُ أَضَافَهُ إِلَى مُؤَنَّثٍ</مقطع>
    <مقطع رقم="٢٠٤">هُوَ مِنْهُ</مقطع>
    <مقطع رقم="٢٠٥">وَلَوْ لَمْ يَكُنْ مِنْهُ</مقطع>
    <مقطع رقم="٢٠٦">لَمْ يُؤَنِّثْهُ</مقطع>
    <مقطع رقم="٢٠٧">لِأَنَّهُ لَوْ قَالَ</مقطع>
    <مقطع رقم="٢٠٨">
        <قول>ذَهَبَتْ عَبْدُ أُمَّكَ</قول>
   </مقطع>
    <مقطع رقم="٢٠٩">لَمْ يَحْسُنْ</مقطع>
    <هارون مجلد="١" صفحة="٥١"/>
    <مقطع رقم="٢١٠">وَمِمَّا جَاْءَ مِثْلُهُ فِي الشِّعْرِ</مقطع>
    <مقطع رقم="٢١١">قَوْلُ الشَّاْعِرِ الْأَعْشَى</مقطع>
    <شاهدة رقم="١٠" xml:id="١٧-١٠">
       <بيت>
          <مصراع>وَتَشْرَقُ بِالْقَوْلِ الَّذِيْ قَدْ أَذَعْتَهُ</مصراع>
          <مصراع>كَمَا شَرِقَتْ صَدْرُ الْقَنَاْةِ مِنَ الْدَّمِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢١٢">لِأَنَّ  <حرف>صَدْرَ الْقَنَاْة</حرف> مِنْ مُؤَنَّثٍ</مقطع>
    <مقطع رقم="٢١٣">وَمِثْلَهُ قَوْلُ جَرِيْرٍ</مقطع>
    <شاهدة رقم="١١" xml:id="١٧-١١">
       <بيت>
          <مصراع>إِذَا بَعْضُ الْسَّنِيَنَّ تَعَرَّقَتْنا</مصراع>
          <مصراع>كَفَىْ الْأَيْتَامَ فَقْدَ أَبِىْ الْيَتِيْمِ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢١٤">لِأَنَّ  <حرف>بَعْضَ</حرف> هٰهُنَا سِنُوْنَ</مقطع>
    <مقطع رقم="٢١٥">وَمِثْلَهُ قَوْلُ جَرِيْرٍ أَيْضًا</مقطع>
    <شاهدة رقم="١٢" xml:id="١٧-١٢">
       <بيت>
          <مصراع>لَّمَّا أَتَى خَبَرُ الْزُّبَيْرِ تَوَاْضَعَتْ</مصراع>
          <مصراع>سُوْرُ الْمَدِيْنَةِ وَالْجِبَالُ الْخُشَّعُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢١٦">وَمِثْلُهُ قَوْلِ ذِيْ الْرُّمَّةِ</مقطع>
    <شاهدة رقم="١٣" xml:id="١٧-١٣">
       <بيت>
          <مصراع>مَشَيْنَ كَمَا اهْتَزَّتْ رِمَاْحٌ تَسَفَّهَتْ</مصراع>
          <مصراع>أَعَالِيَهَا مَرُّ الْرَّيَاْحِ الْنَّوَاسِمِ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="١" صفحة="٥٢"/>
    <مقطع رقم="٢١٧">وَقَالَ الْعَجَّاْجُ</مقطع>
    <شاهدة رقم="١٤" xml:id="١٧-١٤">
       <بيت>
          <مصراع>طُوِّلُ اللَّيَالِي أَسْرَعَتِ فِي نَقْضِى</مصراع>
          <مصراع/>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢١٨">وَسَمِعْنَا مَنْ يُوثَقُ بِهِ مِنَ الْعَرَبِ مَنْ يَقُوْلُ</مقطع>
    <مقطع رقم="٢١٩">
        <قول>اجْتَمَعَتْ أَهْلُ الْيَمَامِةِ</قول>
   </مقطع>
    <مقطع رقم="٢٢٠">لِأَنَّهُ يَقُوْلُ فِي كَلَامِهِ</مقطع>
    <مقطع رقم="٢٢١">
        <قول>اجْتَمَعَتِ الْيَمَامَةُ</قول>
   </مقطع>
    <مقطع رقم="٢٢٢">يَعْنِي  <حرف>أَهْلَ الْيَمَامَةِ</حرف>
   </مقطع>
    <مقطع رقم="٢٢٣">فَأَنَّثَ الْفِعْلَ فِي اللَّفْظِ</مقطع>
    <مقطع رقم="٢٢٤">إِذْ جَعَلَهُ فِي اللَّفْظِ لِلْيَمَامَةِ</مقطع>
    <مقطع رقم="٢٢٥">فَتَرَكَ اللَّفْظَ</مقطع>
    <مقطع رقم="٢٢٦">يُكُوْنُ عَلَى مَا يَكُوْنُ عَلَيْهِ</مقطع>
    <مقطع رقم="٢٢٧">فَِي سَعَةِ الْكَلَامِ</مقطع>
    <مقطع رقم="٢٢٨">وَمِثْلُهُ فِي هٰذَا</مقطع>
    <مقطع رقم="٢٢٩">
        <قول>يَا طَلْحَةَ أَقْبِلْ</قول>
   </مقطع>
    <مقطع رقم="٢٣٠">لِأَنَّ أَكْثَرَ مَا يَدْعُو <حرف>طَلْحَةَ</حرف> بِالتَّرْخِيمِ</مقطع>
    <مقطع رقم="٢٣١">فَتَرَكَ الْحَاْءَ عَلَى حَالِهَا</مقطع>
    <مقطع رقم="٢٣٢">وَ<قول>يَا تَيْمَ تَيْمَ عَدِيٍّ أَقْبِلْ</قول>
   </مقطع>
    <مقطع رقم="٢٣٣">وَقَالَ الشَّاْعِرُ جَرِيْرٍ</مقطع>
    <شاهدة رقم="١٥" xml:id="١٧-١٥">
       <بيت>
          <مصراع>يَا تَيْمَ تَيْمَ عَدِىٍّ ّ لَا أَبَالِكُمْ</مصراع>
          <مصراع>لَا يُلْقِيْنْكُمْ فِي سَوْءَةٍ عُمَرُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢٣٤">وَسَنَرَى هٰذَا مُبَيَّنًا فِي مَوَاْضِعِهِ</مقطع>
    <مقطع رقم="٢٣٥">إِنِ شَاْءَ إِنْشَاْءَ اللّٰهُ</مقطع>
    <مقطع رقم="٢٣٦">وَتَرْكُ التَّاْءِ فِي جَمِيْعِ هٰذَا</مقطع>
    <مقطع رقم="٢٣٧">الْحَدُّ وَالْوَجْهُ</مقطع>
    <مقطع رقم="٢٣٨">وَسَتَرَى مَا إِثْبَاْتُ التَّاْءِ فِيْهِ حَسَنٌ</مقطع>
    <مقطع رقم="٢٣٩">إِنْ شَاْءَ اللّٰهُ</مقطع>
    <مقطع رقم="٢٤٠">مِنْ هٰذَا النَّحْوِ</مقطع>
    <مقطع رقم="٢٤١">لِكَثْرَتِهِ فِي كَلَامِهِمْ</مقطع>
    <مقطع رقم="٢٤٢">وَسَيُبَيَّنُ فِي بَاْبِهِ</مقطع>
    <مقطع رقم="٢٤٣">فَإِنْ قُلْتُ  <قول>مَنْ ضَرَبَتْ عَبْدُ أُمِّكَ</قول>
   </مقطع>
    <مقطع رقم="٢٤٤">أَوْ  <قول>هَذِهِ عَبْدُ زَيْنَبَ</قول>
   </مقطع>
    <مقطع رقم="٢٤٥">لَمْ يَجُزْ</مقطع>
    <هارون مجلد="١" صفحة="٥٣"/>
    <مقطع رقم="٢٤٦">لِأَنَّهُ لَيْسَ مِنْهَا وَلَا بِهَا</مقطع>
    <مقطع رقم="٢٤٧">وَلَا يَجُوْزُ أَنْ تَلْفِظَ بِهَا</مقطع>
    <مقطع رقم="٢٤٨">وَ أَنْتَ تُرِيْدُ الْعَبْدَ</مقطع>
</باب>
