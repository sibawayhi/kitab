<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣١٣"
     درنبورج="١-٢٧١"
     هارون="٢-٢٠٣"
     يعقوب="٢-٢٠٦"
     البكاء="٣-٩٧"
     رقم="١٤٩">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ مَا يَكُوْنُ الِٱسْمُ وَالصِّفَةُ فِيْهِ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
       <مختصر>ابْنُمٌ وَامْرُؤٌ</مختصر>
   </عنوان>
    <مقطع رقم="٢">يَنْضَمُّ فِيْهِ قَبْلَ الْحَرْفِ الْمَرْفُوْعِ حَرْفٌ</مقطع>
    <مقطع رقم="٣">وَيَنْكَسِرُ فِيْهِ قَبْلَ الْحَرْفِ الْمَجْرُوْرِ الَّذِي انْضَمَّ قَبْلَ الْمَرْفُوْعِ</مقطع>
    <مقطع رقم="٤">وَيَنْفَتِحُ فِيْهِ قَبْلَ الْمَنْصُوْبِ ذٰلِكَ الْحَرْفُ</مقطع>
    <مقطع رقم="٥">وَهُوَ<حرف>ابْنُمٌ</حرف>  وَ<حرف>امْرُؤٌ</حرف>
   </مقطع>
    <مقطع رقم="٦">فَإِنْ جَرَرْتَ قُلْتَ  <حرف>فِي ابْنِمٍ وَامْرِئٍ</حرف>
   </مقطع>
    <مقطع رقم="٧">وَإِنْ نَصَبْتَ قُلْتَ  <حرف>ابْنَمًا</حرف>  وَ<حرف>امْرَأً</حرف>
   </مقطع>
    <مقطع رقم="٨">وَإِنْ رَفَعْتَ قُلْتَ <قول>هٰذَا ابْنُمٌ وَامْرُؤٌ</قول>
   </مقطع>
    <مقطع رقم="٩">وَمِثْلُ ذٰلِكَ قَوْلُكَ <قول>يَا زَيْدَ بْنَ عَمْرٍو</قول>
   </مقطع>
    <مقطع رقم="١٠">وَقَاْلَ الرَّاْجِزُ وَهُوَ مِنْ بَنِي الْحِرْمَاْزِ</مقطع>
    <شاهدة رقم="١" xml:id="١٤٩-١">
       <بيت>
          <مصراع>يَا حَكَمَ بْنَ الْمُنْذِرِ بْنِ الْجَاْرُودْ</مصراع>
      </بيت>
   </شاهدة>
    <هارون مجلد="٢" صفحة="٢٠٣"/>
    <مقطع رقم="١١">وَقَاْلَ الْعَجَّاْجُ</مقطع>
    <شاهدة رقم="٢" xml:id="١٤٩-٢">
       <بيت>
          <مصراع>يَا عُمَرَ بْنَ مَعْمَرٍ لَا مُنتَظَرْ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٢">وَإِنَّمَا حَمَلَهُمْ عَلَى هٰذَا أَنَّهُمْ أَنْزَلُوْا الرَّفْعَةَ الَّتِي فِي قَوْلِكَ  <حرف>زَيْد</حرف>  بِمَنْزِلَةِ الرَّفْعَةِ فِي رَاْءِ  <حرف>امْرِئٍ</حرف>
   </مقطع>
    <مقطع رقم="١٣">وَالْجَرَّةُ بِمَنْزِلَةِ الْكَسْرَةِ فِي الرَّاْءِ</مقطع>
    <مقطع رقم="١٤">وَالنَّصْبَةُ كَفَتْحَةِ الرَّاْءِ</مقطع>
    <مقطع رقم="١٥">وَجَعَلُوْهُ تَاْبِعًا لِـ<حرف>ابْنٍ</حرف>
   </مقطع>
    <مقطع رقم="١٦">أَلَا تَرَاْهُمْ يَقُوْلُوْنَ <قول>هٰذَا زَيْدُ بْنُ عَبْدِ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="١٧">وَيَقُوْلُوْنَ <قول>هٰذِهِ هِنْدُ بِنْتُ عَبْدِ اللّٰهِ</قول> فِيْمَنْ صَرَفَ</مقطع>
    <مقطع رقم="١٨">فَتَرَكُوْا التَّنْوِيْنَ ها هنا لِأَنَّهُمْ جَعَلُوْهُ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ لَمَّا كَثُرَ فِي كَلَامِهِمْ</مقطع>
    <مقطع رقم="١٩">فكَذٰلِكَ جَعَلُوْهُ فِي النِّدَاْءِ تَاْبِعًا لْـ<حرف>ابْنٍ</حرف>
   </مقطع>
    <مقطع رقم="٢٠">وَأَمَّا مَنْ قَاْلَ <قول>يَا زَيْدُ بْنَ عَبْدِ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٢١">فَإِنَّهُ إِنَّمَا قَاْلَ <قول>هٰذَا زَيْدُ بْنُ عَبْدِ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٢٢">وَهُوَ لَا يَجْعَلُهُ ٱسْمًا وَاْحِدًا وَحَذَفَ التَّنْوِيْنَ لِأَنَّهُ لَا يَنْجَزِمُ حَرْفَاْنِ</مقطع>
    <مقطع رقم="٢٣">فَإِنْ قُلْتَ  <قبس>هَلَّا قَاْلُوْا <قول>هٰذَا زَيْدُ الطَّوِيْلُ</قول>
      </قبس>
   </مقطع>
    <مقطع رقم="٢٤">فَإِنَّ الْقَوْلُ فِيْهِ أَنْ تَقُوْلَ  <قبس>جُعِلَ هٰذَا لِكَثْرَتِهِ فِي كَلَامِهِمْ بِمَنْزِلَةِ قَوْلِهِمْ <قول>لَدُ الصَّلَاةِ</قول>
      </قبس>
   </مقطع>
    <مقطع رقم="٢٥">حَذَفَهَا لِأَنَّهُ لَا يَنْجَزِمُ حَرْفَاْنِ وَلَمْ يُحَرِّكْهَا</مقطع>
    <مقطع رقم="٢٦">وَاخْتُصَّ هٰذَا الْكَلَامُ بِحَذْفِ التَّنْوِيْنِ لِكَثْرَتِهِ</مقطع>
    <مقطع رقم="٢٧">كَمَا اخْتُصَّ <قول>لَا أَدْرِ</قول> وَ<قول>لَمْ أَبَلْ</قول>لِكَثْرَتِهِما</مقطع>
    <مقطع رقم="٢٨">وَمَنْ جَعَلَهُ بِمَنْزِلَةِ  <حرف>لَدُنْ</حرف>
   </مقطع>
    <مقطع رقم="٢٩">فَحَذَفَهُ لِالْتِقَاْءِ <هارون مجلد="٢" صفحة="٢٠٤"/>السَّاْكِنَيْنِ</مقطع>
    <مقطع رقم="٣٠">وَلَمْ يَجْعَلْهُ بِمَنْزِلَةِ ٱسْمٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="٣١">قَاْلَ <قول>هٰذِهِ هُنْدٌ بِنْتُ فُلَانٍ</قول>
   </مقطع>
    <مقطع رقم="٣٢">وَزَعَمَ يُوْنُسُ أَنَّهَا لُغَةٌ كَثِيْرَةٌ فِي الْعَرَبِ جَيِّدَةٌ</مقطع>
    <مقطع رقم="٣٣">وَأَمَّا <قول>يَا زَيْدُ ابْنَ أَخِيْنَا</قول>
   </مقطع>
    <مقطع رقم="٣٤">فَلَا يَكُوْنُ إِلَّا هكَذَا مِنْ قِبَلِ أَنَّكَ تَقُوْلُ <قول>هٰذَا زَيْدٌ ابْنُ أَخِيْنَا</قول>
   </مقطع>
    <مقطع رقم="٣٥">فَلَا تَجْعَلُهُ ٱسْمًا وَاْحِدًا كَمَا تَقُوْلُ <قول>هٰذَا زَيْدٌ أَخُوْنَا</قول>
   </مقطع>
    <مقطع رقم="٣٦">وَ<حرف>زَيْدٌ</حرف>  فِي قَوْلِكَ <قول>يَا زَيْدُ بْنَ عَمْرٍو</قول> فِي مَوْضِعِ نَصْبٍ</مقطع>
    <مقطع رقم="٣٧">كَمَا أَنَّ الـ<حرف>أُمَّ</حرف>  فِي مَوْضِعِ جَرٍّ فِي قَوْلِكَ <قول>يَا ابْنَ أُمَّ</قول>
   </مقطع>
    <مقطع رقم="٣٨">وَلٰكِنَّهُ لَفَظَهُ كَمَا ذَكَرْتُ لَكَ وَهُوَ عَلَى الْأَصْلِ</مقطع>
</باب>
