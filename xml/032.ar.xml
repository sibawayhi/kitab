  <مقطع رقم="٣٣٠">وَتَقُوْلُ  <قول>الْحَرُّ حِيْنَ تَأَتِيِنِي</قول>
  </مقطع>
  <مقطع رقم="٣٣١">فَيَكُوْنُ ظَرْفًا لِمَا فِيْهِ مِنْ مَعْنَى الْفِعْلِ</مقطع>
  <مقطع رقم="٣٣٢">وَجَمِيْعُ ظُرُوْفِ الزَّمَانِ</مقطع>
  <مقطع رقم="٣٣٣">لَا تَكُوْنَ ظُرُوْفًا لِلْجُثَثِ <هارون مجلد="١" صفحة="١٣٦"/>
  </مقطع>
  <مقطع رقم="٣٣٤">فَإِنْ قُلْتَ  <قول>زَيْدًا يَوْمَ الْجُمْعَةِ أَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="٣٣٥">لَمْ يَكُنْ فِيْهِ إِلَّا النَّصْبُ</مقطع>
  <مقطع رقم="٣٣٦">لِأَنَّهُ لَيْسَ هٰهُنَا مَعْنَى جَزَاءٍ</مقطع>
  <مقطع رقم="٣٣٧">وَلَا يَجُوْزُ الرَّفْعُ إِلَّا عَلَى قَوْلِهِ</مقطع>
  <شاهدة رقم="٦" xml:id="٣٢-٦">
    <بيت>
      <مصراع>كُلُّهْ لَمْ أَصْنَعِ</مصراع>
      <مصراع/>
    </بيت>
  </شاهدة>
  <مقطع رقم="٣٣٨">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع رقم="٣٣٩">
    <قول>زَيْدٌ يَوْمَ الْجُمْعَةِ فَأَنَا أَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٣٤٠">لَمْ يَجُزْ</مقطع>
  <مقطع رقم="٣٤١">وَلَوْ قُلْتَ  <قول>زَيْدٌ إِذَا جَاءَنِيْ فَأَنَا أَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٣٤٢">كَانَ جَيِّدًا</مقطع>
  <مقطع رقم="٣٤٣">فَهٰذَا يَدُلُّكَ عَلَى أَنَّهُ يَكُوْنُ عَلَى غَيْرِ قَوْلِهِ</مقطع>
  <مقطع رقم="٣٤٤">
