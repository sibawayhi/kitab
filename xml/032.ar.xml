<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="٣٢">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَابٌ مِنَ الِاسْتِفْهَامِ</مقطع>
    <مقطع رقم="٢">يَكُوْنُ الِاسْمُ فِيْهِ رَفْعًا</مقطع>
    <مقطع رقم="٣">لِأَنَّكَ تَبْتَدِئُهُ لِتُنَبِّهَ الْمُخَاطَبَ</مقطع>
    <مقطع رقم="٤">ثُمَّ تَسْتَفْهِمُ بَعْدَ ذَلِلِكَ</مقطع>
  </عنوان>
  <مقطع رقم="٥">وَذٰلِكَ قَوْلُكَ  <قول>زَيْدٌ كَمْ مَرَّةً رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="٦">وَ<قول>عَبْدُ اللّٰهِ هَلْ لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="٧">وَ<قول>عَمْرُوٌ هَلَّا لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="٨">وَكَذٰلِكَ سَائِرُ حُرُوْفِ الِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٩">فَالْعَامِلُ فِيْهِ الِابْتِدَاءُ</مقطع>
  <مقطع رقم="١٠">كَمَا أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع رقم="١١">
    <قول>أَرَأَيْتَ زَيْدًا هَلْ لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="١٢">كَانَ  <حرف>أَرَأَيْتَ</حرف> هُوَ الْعَامِلُ</مقطع>
  <مقطع رقم="١٣">وَكَذٰلِكَ إِذَا قُلْتَ</مقطع>
  <مقطع رقم="١٤">
    <قول>قَدْ عَلِمْتُ زَيْدًا كَمْ لَقِيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="١٥">كَانَ  <حرف>عَلِمْتُ</حرف> هُوَ الْعَامِلُ</مقطع>
  <مقطع رقم="١٦">فَكَذٰلِكَ هٰذَا</مقطع>
  <مقطع رقم="١٧">فَمَا بَعْدَ الْمُبْتَدَإِ مِنْ هٰذَا الْكَلَامِ</مقطع>
  <مقطع رقم="١٨">في مَوْضِعِ خَبَرِهِ</مقطع>
  <مقطع رقم="١٩">فِإِنْ قُلْتَ  <قول>زَيْدٌ كَمْ مَرَّةً رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٢٠">فَهُوَ ضَعِيْفٌ</مقطع>
  <مقطع رقم="٢١">إِلَّا أَنْ تُدْخِلَ الْهَاءَ</مقطع>
  <مقطع رقم="٢٢">كَمَا ضَعُفَ فِي قَوْلِهِ</مقطع>
  <مقطع رقم="٢٣">
    <قول>كُلُّهُ لَمْ أَصْنَعِ</قول>
  </مقطع>
  <مقطع رقم="٢٤">وَلَا يَجُوْزُ أَنْ تَقُوْلُ</مقطع>
  <مقطع رقم="٢٥">
    <قول>زَيْدًا هَلْ رَأَيْتَ</قول>
  </مقطع>
  <مقطع رقم="٢٦">إِلَّا أَنْ تُرِيْدَ مَعْنَى الْهَاءَ</مقطع>
  <مقطع رقم="٢٧">مَعَ ضَعْفِهِ</مقطع>
  <مقطع رقم="٢٨">فَتَرْفَعُ لِأَنَّكَ قَدْ فَصَلْتَ</مقطع>
  <مقطع رقم="٢٩">بَيْنَ الْمُبْتَدَإِ وَبَيْنَ الْفِعْلِ</مقطع>
  <مقطع رقم="٣٠">فَصَارَ الِاسْمُ مُبْتَدَأً</مقطع>
  <مقطع رقم="٣١">وَالْفِعْلُ بَعْدَ حَرْفِ الِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٣٢">وَلَوْ حَسُنَ هٰذَا أَوْ جَازَ</مقطع>
  <مقطع رقم="٣٣">لَقُلْتَ  <قول>قَدْ عَلِمْتُ زَيْدٌ كَمْ ضُرِبَ</قول>
  </مقطع>
  <هارون مجلد="١" صفحة="١٢٧"/>
  <مقطع رقم="٣٤">وَلَقُلْتَ  <قول>أَرَأَيْتَ زَيْدٌ كَمْ مَرَّةً ضُرِبَ</قول>
  </مقطع>
  <مقطع رقم="٣٥">عَلَىَ الْفِعْلِ الْآخِرِ</مقطع>
  <مقطع رقم="٣٦">فَكَمَا لَا تَجِدُ بُدًا</مقطع>
  <مقطع رقم="٣٧">مِنْ إِعْمَالِ الْفِعْلِ الْأَوَّلِ</مقطع>
  <مقطع رقم="٣٨">كَذٰلِكَ لَا تَجِدُ بُدًا</مقطع>
  <مقطع رقم="٣٩">مِنْ إِعْمَالِ الِابْتِدَاءِ</مقطع>
  <مقطع رقم="٤٠">لِأَنَّكَ إِنَّمَا تَجِيْءُ بِالِاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٤١">بَعْدَ مَا تَفْرُغُ مِنَ الِابْتِدَاءَ</مقطع>
  <مقطع رقم="٤٢">وَلَوْ أَرَادُوا الإِعْمَالَ</مقطع>
  <مقطع رقم="٤٣">لَمَّا ابْتَدَءُوا بِالِاسْمِ</مقطع>
  <مقطع رقم="٤٤">أَلَا تَرَىَ أَنَّكَ تَقُوْلُ</مقطع>
  <مقطع رقم="٤٥">
    <قول>زَيْدٌ هٰذَا أعَمْرٌو ضَرَبَهُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="٤٦">وَلَا تَقُوْلُ  <قول>عَمْرًا أَضَرَبْتَ</قول>
  </مقطع>
  <مقطع رقم="٤٧">فَكَمَا لَا يَجُوْزُ هٰذَا</مقطع>
  <مقطع رقم="٤٨">لَا يَجُوْزُ ذٰلِكَ</مقطع>
  <مقطع رقم="٤٩">فَحَرْفُ الْاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٥٠">لَا يُفْصَلُ بِهِ</مقطع>
  <مقطع رقم="٥١">بَيْنَ الْعَامِلِ وَالْمَعْمَوّلَ</مقطع>
  <مقطع رقم="٥٢">ثُمَّ يَكُوْنُ عَلَى حَالِهِ</مقطع>
  <مقطع رقم="٥٣">إِذَا جَاءَتْ الْأَلِفُ أَوَّلًا</مقطع>
  <مقطع رقم="٥٤">وَإِنَّمَا يَدْخُلُ عَلَى الْخَبَرِ</مقطع>
  <مقطع رقم="٥٥">وَمِمَّا لَا يَكُوْنُ إِلَّا رَفْعًا</مقطع>
  <مقطع رقم="٥٦">قَوْلُكَ  <قول>أَأَخَوَاكَ اللَّذَانِ رَأَيْتُ</قول>
  </مقطع>
  <مقطع رقم="٥٧">لَأَنَّ  <حرف>رَأَيْتُ</حرف> صِلَةٌ لِـ<حرف>اللَّذَيْنِ</حرف>
  </مقطع>
  <مقطع رقم="٥٨">وَبِهِ يَتِمُّ ٱسْمًا</مقطع>
  <مقطع رقم="٥٩">فَكَأَنَّكِ قُلْتَ  <قول>أَأَخَوَاكَ صَاحِبَانَا</قول>
  </مقطع>
  <مقطع رقم="٦٠">وَلَوْ كَانَ شَيْءٌ مِنْ هٰذَا</مقطع>
  <مقطع رقم="٦١">يَنْصِبُ شَيْئًا فِي الْاسْتِفْهَامِ</مقطع>
  <مقطع رقم="٦٢">لَقُلْتَ فِيْ الْخَبَرِ</مقطع>
  <مقطع رقم="٦٣">
    <قول>زَيْدًا الَّذِيْ رَأَيْتُ</قول>
  </مقطع>
  <مقطع رقم="٦٤">فَنَصَبْتَ كَمَا تَقُوْلُ</مقطع>
  <مقطع رقم="٦٥">
    <قول>زَيْدًا رَأَيْتُ</قول>
  </مقطع>
  <مقطع رقم="٦٦">وَإِذَا كَانَ الْفِعْلُ فِي مَوْضِعِ الصِّفَةِ</مقطع>
  <مقطع رقم="٦٧">فَهُوَ كَذٰلِكَ وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٦٨">
    <قول>أَزَيْدٌ أَنْتَ رَجُلٌ تَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٦٩">وَ<قول>أَكُلُّ يَوْمٍ ثَوْبٌ تَلْبَسُهُ</قول>
  </مقطع>
  <مقطع رقم="٧٠">فَإِذَا كَانَ وَصْفًا</مقطع>
  <مقطع رقم="٧١">فَأَحْسَنُهُ أَنْ يَكُوْنَ فِيْهِ الْهَاءُ</مقطع>
  <مقطع رقم="٧٢">لِأَنَّهُ لَيْسَ بِمَوْضِعِ إِعْمَالٍ</مقطع>
  <مقطع رقم="٧٣">وَلَكِنَّهُ يَجُوْزُ فِيْهِ</مقطع>
  <مقطع رقم="٧٤">كَمَا جَازَ فِي الْوَصْلِ</مقطع>
  <مقطع رقم="٧٥">لِأَنَّهُ فِي مَوْضِعِ مَا يَكُوْنُ مِنَ الِاسْمِ</مقطع>
  <مقطع رقم="٧٦">وَلَمْ تَكُنْ لَتَقُوْلَ</مقطع>
  <مقطع رقم="٧٧">
    <قول>أزَيْدًا أَنْتَ رَجُلٌ تَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٧٨">وَأَنْتَ إِذَا جَعَلْتَهُ وَصْفًا لِلْمَفْعُوْلِ</مقطع>
  <مقطع رقم="٧٩">لَمْ تَنْصِبْهُ</مقطع>
  <مقطع رقم="٨٠">لِأَنَّهُ لَيْسَ بِمَبْنِيٍّ عَلَى الْفِعْلِ</مقطع>
  <مقطع رقم="٨١">وَلَكِنَّ <هارون مجلد="١" صفحة="١٢٨"/>الْفِعْلَ فِي مَوْضِعِ الْوَصْفِ</مقطع>
  <مقطع رقم="٨٢">كَمَا كَانَ فِي مَوْضِعِ الْخَبَرِ</مقطع>
  <مقطع رقم="٨٣">فَمِنْ ذٰلِكَ قَوْلُ الْشَّاعِرِ</مقطع>
  <شاهدة رقم="١" xml:id="٣٢-١">
    <بيت>
      <مصراع>أَكُلَّ عَامٍ نَعَمٌ تَحْوُونَهْ</مصراع>
      <مصراع>يُلْقِحُهُ قَوْمٌ وَتَنْتِجُوْنَهْ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٤">وَقَالَ زَيْدٍ الْخَيْلِ</مقطع>
  <!-- harûn says al-xayr is post-islamic name, al-xayl is jahiliyya name --> <شاهدة رقم="٢" xml:id="٣٢-٢">
    <بيت>
      <مصراع>أَفِيْ كُلِّ عَامٍ مَأْتَمٌ تَبْعَثُونَهُ</مصراع>
      <مصراع>عَلَىمِحْمَرٍ ثَوَّبْتُمُوهُ وَمَا رِضا</مصراع>
    </بيت>
  </شاهدة>
  <هارون مجلد="١" صفحة="١٢٩"/>
  <مقطع رقم="٨٥">وَقَالَ جَرِيْرٌ فِيْمَا لَيْسَ فِيْهِ الْهَاءُ</مقطع>
  <شاهدة رقم="٣" xml:id="٣٢-٣">
    <بيت>
      <مصراع>أَبَحْتَ حِمَىً تِهَامَةَ بَعْدَ نَجْدٍ</مصراع>
      <مصراع>وَمَا شَيْءٌ حَمَيْتَ بِمُسْتَبَاحِ</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٦">وَقَالَ آَخِرُ <!-- variant in harun: الْشَّاعِرُ --></مقطع>
  <شاهدة رقم="٤" xml:id="٣٢-٤">
    <بيت>
      <مصراع>فَمَا أَدْرِىٓ أُغَيْرِهُمْ تَنَاءٍ</مصراع>
      <مصراع>وَطُوْلُ الْعَهْدِ أَمْ مَالٌ أَصَابُوا</مصراع>
    </بيت>
  </شاهدة>
  <مقطع رقم="٨٧">وَمِمَّا لَا يَكُوْنُ فِيْهِ إِلَّا الرَّفْعُ</مقطع>
  <مقطع رقم="٨٨">قَوْلُهُ  <قول>أَعَبْدُ اللّٰهِ أَنْتَ الضَّارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="٨٩">لِأَنَّكَ إِنَّمَا تُرِيْدُ مَعْنَى  <حرف>الَّذِي ضَرَبَهُ</حرف>
  </مقطع>
  <مقطع رقم="٩٠">وَهٰذَا لَا يَجْرِي مُجْرَى  <حرف>يَفْعَلُ</حرف>
  </مقطع>
  <مقطع رقم="٩١">أَلَا تَرَى أَنَّهُ لَا يَجُوْزُ أَنْ تَقُوْلَ</مقطع>
  <مقطع رقم="٩٢">
    <قول>مَا زَيْدًا أَنَا الضَّارِبُ</قول>
  </مقطع>
  <مقطع رقم="٩٣">وَ لَا  <قول>زَيْدًا أَنْتَ الضَّارِبُ</قول>
  </مقطع>
  <مقطع رقم="٩٤">وَإِنَّمَا تَقُوْلُ  <حرف>الضَّارِبُ زَيْدًا</حرف>
  </مقطع>
  <مقطع رقم="٩٥">عَلَىَ مِثْلِ قَوْلِكَ  <حرف>الْحَسَنُ وَجْهًا</حرف>
  </مقطع>
  <مقطع رقم="٩٦">أَلَا تَرَى أَنَّكَ لَا تَقُوْلُ</مقطع>
  <مقطع رقم="٩٧">
    <قول>أَنْتَ الْمَائَةَ الْوَاهِبُ</قول>
  </مقطع>
  <مقطع رقم="٩٨">كَمَا تَقُوْلُ  <قول>أَنْتَ زَيْدًا ضَارِبٌ</قول>
  </مقطع>
  <مقطع رقم="٩٩">وَتَقُوْلُ  <قول>هٰذَا ضَارِبٌ كَمَا تَرَىَ</قول>
  </مقطع>
  <مقطع رقم="١٠٠">فَيَجِيْءُ عَلَى مَعْنَى  <قول>هٰذَا يَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="١٠١">وَهُوَ يَعْمَلُ فِي حَالِ حَدِيْثِكَ</مقطع>
  <مقطع رقم="١٠٢">وَتَقُوْلُ  <قول>هٰذَا ضَارِبٌ</قول>
  </مقطع>
  <مقطع رقم="١٠٣">فَيَجِيْءُ عَلَى مَعْنَى  <قول>هٰذَا سَيَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="١٠٤">وَإِذَا قُلْتَ  <قول>هٰذَا الضَّارِبُ</قول>
  </مقطع>
  <مقطع رقم="١٠٥">فَإِنَّمَا تُعَرِّفُهُ عَلَى مَعْنَى  <حرف>الَّذِي ضَرَبَ</حرف>
  </مقطع>
  <مقطع رقم="١٠٦">فَلَا يَكُوْنُ إِلَّا رَفْعًا</مقطع>
  <مقطع رقم="١٠٧">كَمَا أَنَّكَ لَوْ قُلْتَ  <قول>أَزَيْدٌ أَنْتَ ضَارِبُهُ</قول>
  </مقطع>
  <مقطع رقم="١٠٨">إِذَا لَمْ تُرِدْ بِـ<حرف>ضَارِبُهُ</حرف> الْفِعْلَ</مقطع>
  <مقطع رقم="١٠٩">وَصَارَ <هارون مجلد="١" صفحة="١٣٠"/>مَعْرِفَةً رَفَعْتَ</مقطع>
  <مقطع رقم="١١٠">فَكَذٰلِكَ هٰذَا</مقطع>
  <مقطع رقم="١١١">الَّذِي لَا يَجِيْءُ إِلَّا عَلَى هٰذَا الْمَعْنَى</مقطع>
  <مقطع رقم="١١٢">فَإِنَّمَا يَكُوْنُ بِمَنْزِلَةَ الْفِعْلِ نَكِرَةً</مقطع>
  <مقطع رقم="١١٣">وَأَصْلُ وُقُوْعِ الْفِعْلِ</مقطع>
  <مقطع رقم="١١٤">صِفَةً لِلنَّكِرَةِ</مقطع>
  <مقطع رقم="١١٥">كَمَا لَا يَكُوْنُ الاسْمُ كَالْفِعْلِ إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="١١٦">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع رقم="١١٧">
    <قول>أَكُلَّ يَوْمٍ زَيْدًا تَضْرِبُهُ</قول>
  </مقطع>
  <مقطع رقم="١١٨">لَمْ يَكُنْ إِلَّا نَصْبًا</مقطع>
  <مقطع رقم="١١٩">لِأَنَّهُ لَيْسَ بِوَصْفٍ</مقطع>
  <مقطع رقم="١٢٠">فَإِذَا كَانَ وَصْفًا</مقطع>
  <مقطع رقم="١٢١">فَلَيْسَ بِمَبْنِيٍّ عَلَيْهِ الْأَوَّلُ</مقطع>
  <مقطع رقم="١٢٢">كَمَا أَنَّهُ لَا يَكُوْنُ الِاسْمُ مَبْنِيًّا عَلَيْهِ</مقطع>
  <مقطع رقم="١٢٣">فِي الْخَبَرِ</مقطع>
  <مقطع رقم="١٢٤">فَلَا يَكُوْنُ  <حرف>ضَارِبٌ</حرف>
  </مقطع>
  <مقطع رقم="١٢٥">بِمَنْزِلَةِ  <حرف>يَفْعَلُ</حرف> وَ<حرف>تَفْعَلُ</حرف>
  </مقطع>
  <مقطع رقم="١٢٦">إِلَّا نَكِرَةً</مقطع>
  <مقطع رقم="١٢٧">وَتَقُوْلُ  <قول>أَذَكَرٌ أَنْ تَلِدَ نَاقَتُكَ أَحَبُّ إِلَيْكَ أَمْ أُنْثَى</قول>
  </مقطع>
  <مقطع رقم="١٢٨">كَأَنَّهُ قَالَ  <قول>أَذَكَرٌ نِتَاجُهَا أَحَبُّ إِلَيْكَ أَمْ أُنْثَى</قول>
  </مقطع>
  <مقطع رقم="١٢٩">فَـ<حرف>أَنْ تَلِدَ</حرف> اسْمٌ</مقطع>
  <مقطع رقم="١٣٠">وَ<حرف>تَلِدُ</حرف>
  </مقطع>
  <مقطع رقم="١٣١">بِهِ يَتِمُّ الْاسْمُ</مقطع>
  <مقطع رقم="١٣٢">كَمَا يَتِمُّ  <حرف>الَّذِي</حرف> بِالْفِعْلِ</مقطع>
  <مقطع رقم="١٣٣">فَلَا عَمَلَ لَهُ هُنَا</مقطع>
  <مقطع رقم="١٣٤">كَمَا لَيْسَ يَكُوْنُ لِصِلَةِ  <حرف>الَّذِي</حرف> عَمَلٌ</مقطع>
  <مقطع رقم="١٣٥">وَتَقُوْلُ  <قول>أَزَيْدٌ أَنْ يَضْرِبَهُ عَمْرٌو أَمْثَلُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="١٣٦">كَأَنَّهُ قَالَ  <قول>أَزَيْدٌ ضَرْبُ عَمْرٍو إِيَّاهُ أَمْثَلُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="١٣٧">فَالْمَصْدَرُ [مَبْنِيٌّ عَلَى الْـ]مُبْتَدَأِ</مقطع>
  <مقطع رقم="١٣٨">وَ<حرف>أَمْثَلُ</حرف> مَبْنِيٌّ عَلَيْهِ</مقطع>
  <مقطع رقم="١٣٩">وَلَمْ يُنْزَلْ مَنْزِلَةً  <حرف>يَفْعَلُ</حرف>
  </مقطع>
  <مقطع رقم="١٤٠">فَكَأَنَّهُ قَالَ  <قول>أَزَيْدٌ ضَارِبُهُ خَيْرٌ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="١٤١">وَذٰلِكَ لِأَنَّكَ ابْتَدَأْتَهُ</مقطع>
  <مقطع رقم="١٤٢">وَبَنَيْتَ عَلَيْهِ</مقطع>
  <مقطع رقم="١٤٣">فَجَعَلْتَهُ ٱسْمًا</مقطع>
  <مقطع رقم="١٤٤">وَلَمْ يَلْتَبِسْ  <حرف>زَيْدٌ</حرف> بِالْفِعْلِ</مقطع>
  <مقطع رقم="١٤٥">إِذْ كَانَ صِلَةً لَهُ</مقطع>
  <مقطع رقم="١٤٦">كَمَا لَمْ يَلْتَبِسْ بِهِ  <حرف>الضَارِبِهُ</حرف>
  </مقطع>
  <مقطع رقم="١٤٧">حِيْنَ قُلْتَ  <قول>زَيْدٌ أَنْتَ الضَارِبِهُ</قول>
  </مقطع>
  <مقطع رقم="١٤٨">إِلَّا أَنَّ  <حرف>الضَارِبِهُ</حرف>
  </مقطع>
  <مقطع رقم="١٤٩">فِي مَعْنَى  <حرف>الَّذِي ضَرَبَهُ</حرف>
  </مقطع>
  <مقطع رقم="١٥٠">وَالْفِعْلُ تَمَامُ هَذِهِ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="١٥١">فَالْفِعْلُ لَا يَلْتَبِسُ بِالْأَوَّلِ</مقطع>
  <مقطع رقم="١٥٢">إِذَا كَانَ هَكَذَا</مقطع>
  <مقطع رقم="١٥٣">وَتَقُوْلُ  <قول>أَأَنْ تَلِدَ نَاقَتُكَ ذَكَرًا أَحَبُّ إِلَيْكَ أَمْ أُنْثَى</قول>
  </مقطع>
  <مقطع رقم="١٥٤">لِأَنَّكَ حَمَلْتَهُ عَلَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٥٥">الَّذِي هُوَ صِلَةُ  <حرف>أَنْ</حرف>
  </مقطع>
  <مقطع رقم="١٥٦">فَصَارَ فِي صِلَتِهِ</مقطع>
  <مقطع رقم="١٥٧">فَصَارَ كَقَوْلِكَ  <قول>الَّذِي رَأَيْتُ أَخَاهُ <هارون مجلد="١" صفحة="١٣١"/>زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٥٨">وَلَا يَجُوْزُ أَنْ تَبْتَدِئَ بِـ<حرف>الْأَخِ</حرف>
  </مقطع>
  <مقطع رقم="١٥٩">قَبْلَ  <حرف>الَّذِي</حرف>
  </مقطع>
  <مقطع رقم="١٦٠">وَتُعْمِلَ فِيْهِ  <حرف>رَأَيْتُ أَخَاهُ زَيْدٌ</حرف>
  </مقطع>
  <مقطع رقم="١٦١">فَكَذٰلِكَ لَا يَجُوْزُ النَّصْبُ</مقطع>
  <مقطع رقم="١٦٢">فِي قَوْلِكَ  <قول>أَذَكَرٌ أَنْ تَلِدَ نَاقَتُكَ أَحَبُّ إِلَيْكَ أَمْ أُنْثَىْ</قول>
  </مقطع>
  <مقطع رقم="١٦٣">وَذٰلِكَ أَنَّكَ لَوْ قُلْتَ</مقطع>
  <مقطع رقم="١٦٤">
    <قول>أَخَاهُ الَّذِي رَأَيْتُ زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٦٥">لَمْ يَجُزْ وَأَنْتَ تُرِيْدَ  <قول>الَّذِي رَأَيْتُ أَخَاهُ زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٦٦">وَمِمَّا لَا يَكُوْنُ فِي الْاسْتِفْهَامِ</مقطع>
  <مقطع رقم="١٦٧">إِلَّا رَفْعًا</مقطع>
  <مقطع رقم="١٦٨">قَوْلُكَ  <قول>أَعَبْدُ اللّٰهِ أَنْتَ أَكْرَمُ عَلَيْهِ أَمْ زَيْدٌ</قول>
  </مقطع>
  <مقطع رقم="١٦٩">وَ<قول>أَعَبْدُ اللّٰهِ أَنْتَ لَهُ أَصْدَقُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="١٧٠">كَأَنَّكَ قُلْتَ  <قول>أَعَبْدُ اللّٰهِ أَنْتَ أَخُوْهُ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="١٧١">لِأَنَّ  <حرف>أَفْعَلُ</حرف> لَيْسَ بِفِعْلٍ</مقطع>
  <مقطع رقم="١٧٢">وَلَا ٱسْمٍ يَجْرِيَ مُجْرَى الْفِعْلِ</مقطع>
  <مقطع رقم="١٧٣">وَإِنَّمَا هُوَ بِمَنْزِلَةِ  <حرف>حَسَنٌ</حرف> وَ<حرف>شَدِيْدٌ</حرف>
  </مقطع>
  <مقطع رقم="١٧٤">وَنَحْوِ ذٰلِكَ</مقطع>
  <مقطع رقم="١٧٥">وَمِثْلُهُ  <قول>أَعَبْدُ اللّٰهِ أَنْتَ لَهُ خَيْرٌ أَمْ بِشْرٌ</قول>
  </مقطع>
  <مقطع رقم="١٧٦">وَتَقُوْلُ  <قول>أَزَيْدٌ أَنْتَ لَهُ أَشَدُّ ضَرْبًا أَمْ عَمْروَ</قول>
  </مقطع>
  <مقطع رقم="١٧٧">فَإِنَّمَا انْتِصَابُ الـ<حرف>ضَّرْبِ</حرف>
  </مقطع>
  <مقطع رقم="١٧٨">كَانْتِصَابِ  <حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="١٧٩">فِي قَوْلِكَ  <قول>مَا أَحْسَنَ زَيْدًا</قول>
  </مقطع>
  <مقطع رقم="١٨٠">وَانْتِصَابِ  <حرف>وَجْهٍ</حرف>
  </مقطع>
  <مقطع رقم="١٨١">فِي قَوْلِكَ  <قول>حَسَنٌ وَجْهَ الْأَخِ</قول>
  </مقطع>
  <مقطع رقم="١٨٢">فَالْمَصْدَرُ هُنَا كَغَيْرِهِ مِنَ الْأَسْمَاءِ</مقطع>
  <مقطع رقم="١٨٣">كَقَوْلِكَ  <قول>أَزَيْدٌ أَنْتَ لَهُ أَطْلَقُ وَجْهًا أَمْ فُلَانٌ</قول>
  </مقطع>
  <مقطع رقم="١٨٤">وَلَيْسَ لَهُ سَبِيْلٌ إِلَى الْإِعْمَالِ</مقطع>
  <مقطع رقم="١٨٥">وَلَيْسَ لَهُ وَجْهٌ فِي ذٰلِكَ</مقطع>
  <مقطع رقم="١٨٦">وَمَّمِا لَا يَكُوْنُ فِي الْاسْتِفْهَامِ</مقطع>
  <مقطع رقم="١٨٧">إِلَّا رَفْعًا قَوْلُكَ  <قول>أَعَبْدُ اللّٰهِ إِنْ تَرَهُ تَضْرِبْهُ</قول>
  </مقطع>
  <مقطع رقم="١٨٨">وَكَذٰلِكَ إِنْ طَرَحْتَ</مقطع>
  <مقطع رقم="١٨٩">الْهَاءَ مَعَ قُبْحِهِ</مقطع>
  <مقطع رقم="١٩٠">فَقُلْتَ  <قول>أَعَبْدُ اللّٰهِ إِنْ تَرَ تَضْرِبْ</قول>
  </مقطع>
  <مقطع رقم="١٩١">فَلَيْسَ لِلْآخِرِ سَبِيلٌ عَلَى الِاسْمِ</مقطع>
  <مقطع رقم="١٩٢">لِأَنَّهُ مَجْزُوْمٌ</مقطع>
  <مقطع رقم="١٩٣">وَهُوَ جَوَابُ الْفِعْلِ الْأَوَّلِ</مقطع>
  <مقطع رقم="١٩٤">وَلَيْسَ لِلْفِعْلِ الْأَوَّلِ سَبِيلٌ</مقطع>
  <مقطع رقم="١٩٥">لِأَنَّهُ مَعَ  <حرف>إِنْ</حرف>
  </مقطع>
  <مقطع رقم="١٩٦">بِمَنْزِلَةِ قَوْلِكَ  <قول>أَعَبْدُ اللّٰهِ حِيْنَ يَأْتِيْنِي أَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="١٩٧">فَلَيْسَ <هارون مجلد="١" صفحة="١٣٢"/>لِـ<حرف>عَبْدُ اللّٰهِ</حرف> فِي  <حرف>يَأْتِيْنِي</حرف> حَظٌّ</مقطع>
  <مقطع رقم="١٩٨">لِأَنَّهُ بِمَنْزِلَةِ قَوْلِكَ  <قول>أَعَبْدُ اللّٰهِ يَوْمَ الْجُمْعَةِ أَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="١٩٩">وَمِثْلُ ذٰلِكَ  <قول>زَيْدٌ حَيْنَ أَضْرِبُ يَأْتِيْنِي</قول>
  </مقطع>
  <مقطع رقم="٢٠٠">لِأَنَّ الْمُعْتَمِدَ عَلَى  <حرف>زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="٢٠١">آخِرُ الْكَلَامِ</مقطع>
  <مقطع رقم="٢٠٢">وَهُوَ<حرف>يَأْتِيْنِي</حرف>
  </مقطع>
  <مقطع رقم="٢٠٣">وَكَذٰلِكَ إِذَا قُلْتَ</مقطع>
  <مقطع رقم="٢٠٤">
    <قول>زَيْدًا إِذَا أَتَانِي أَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="٢٠٥">وَإِنَّمَا هُوَ بِمَنْزِلَةِ  <حرف>حِيْنَ</حرف>
  </مقطع>
  <مقطع رقم="٢٠٦">فَإِنْ لَمْ تَجْزِمِ الْآخِرَ</مقطع>
  <مقطع رقم="٢٠٧">نَصَبْتَ</مقطع>
  <مقطع رقم="٢٠٨">وَذٰلِكَ قَوْلُكَ</مقطع>
  <مقطع رقم="٢٠٩">
    <قول>أزَيْدًا إِنْ رَأَيْتَ تَضْرِبُ</قول>
  </مقطع>
  <مقطع رقم="٢١٠">وَأَحْسَنُهُ أَنْ تُدْخِلَ فِي  <حرف>رَأَيْتَ</حرف> الْهَاءَ</مقطع>
  <مقطع رقم="٢١١">لِأَنَّهُ غَيْرُ مُسْتَعْمَلٍ</مقطع>
  <مقطع رقم="٢١٢">فَصَارَتْ حُرُوْفُ الْجَزَاءِ فِي هٰذَا</مقطع>
  <مقطع رقم="٢١٣">بِمَنْزِلَةِ قَوْلِكَ  <قول>زَيْدٌ كَمْ مَرَّةً رَأَيْتَهُ</قول>
  </مقطع>
  <مقطع رقم="٢١٤">فَإِذَا قُلْتَ  <قول>إِنْ تَرَ زَيْدًا تَضْرِبْ</قول>
  </مقطع>
  <مقطع رقم="٢١٥">فَلَيْسَ إِلَّا هٰذَا</مقطع>
  <مقطع رقم="٢١٦">صَارَ بِمَنْزِلَةِ قَوْلِكَ  <قول>حِيْنَ تَرَى زَيْدًا يَأْتِيَكَ</قول>
  </مقطع>
  <مقطع رقم="٢١٧">لِأَنَّهُ صَارَ فِي مَوْضِعِ الْمُضْمَرِ</مقطع>
  <مقطع رقم="٢١٨">حِيْنَ قُلْتَ  <قول>زَيْدٌ حِيْنَ تَضْرِبُهُ يَكُوْنُ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع رقم="٢١٩">وَلَوْ جَازَ أَنْ تَجْعَلَ زَيْدًا</مقطع>
  <مقطع رقم="٢٢٠">مُبْتَدَأً عَلَى هٰذَا الْفِعْلِ</مقطع>
  <مقطع رقم="٢٢١">لَقُلْتَ  <قول>الْقِتَالُ زَيْدًا [زيدٌ؟] حِيْنَ تَأْتِي</قول>
  </مقطع>
