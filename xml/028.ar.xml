    <مقطع رقم="١٠٦">وَأَمَّا الْأَلِفُ</مقطع>
    <مقطع رقم="١٠٧">فَتَقْدِيْمُ الاسْمِ فِيْهَا قَبْلَ الْفِعْلِ</مقطع>
    <مقطع رقم="١٠٨">جَائِزٌ</مقطع>
    <مقطع رقم="١٠٩">كَمَا جَازَ ذٰلِكَ في  <حرف>هَلَّا</حرف> 
   </مقطع>
    <مقطع رقم="١١٠">وَذٰلِكَ لِأَنَّهَا حَرْفُ الِاسْتِفْهَامِ</مقطع>
    <مقطع رقم="١١١">الَّذِى لَا يَزُوْلُ عَنْهُ إِلَى غَيْرِهِ</مقطع>
    <مقطع رقم="١١٢">وَلَيْسَ لِلِاسْتِفْهَامِ في الْأَصْلِ غَيْرُهُ</مقطع>
    <مقطع رقم="١١٣">وَإِنَّمَا تَرَكُوْا الْأَلِفَ</مقطع>
    <مقطع رقم="١١٤">في  <حرف>مَنْ</حرف> 
   </مقطع>
    <مقطع رقم="١١٥">وَ<حرف>مَتَىَ</حرف> 
   </مقطع>
    <مقطع رقم="١١٦">وَ<حرف>هَلْ</حرف> 
   </مقطع>
    <مقطع رقم="١١٧">وَنَحْوِهِنَّ</مقطع>
    <مقطع رقم="١١٨">حَيْثُ أَمِنُوْا الِالْتِبَاسَ</مقطع>
    <مقطع رقم="١١٩">أَلَا تَرَى</مقطع>
    <مقطع رقم="١٢٠">أَنَّكَ تُدْخِلُهَا عَلَى  <حرف>مَنْ</حرف> 
   </مقطع>
    <مقطع رقم="١٢١">إِذَا تَمَّتْ بِ‍<ص أَ="وصل">صِلَتِهَا</ص> 
   </مقطع>
    <مقطع رقم="١٢٢">كَقَوْلِ الْلَّهْ عَزَّ وَجَلَّ</مقطع>
     <آية>أَفَمَنْ يُلْقَى في النَّارِ خَيْرٌ أَمَّنْ يَاتِى آمِنا يَوْمَ الْقِيَامِةِ</آية> 
    <مقطع رقم="١٢٣">وَتَقُوْلُ</مقطع>
    <هارون مجلد="١" صفحة="٩٩"/>
    <مقطع رقم="١٢٤">
        <حرف>أَمْ هَلْ</حرف> 
