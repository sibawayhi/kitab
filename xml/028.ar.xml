    <مقطع رقم="١٢٥">فَإِنَّمَا هِىَ بِمَنْزِلَةِ  <حرف>قَدْ</حرف> 
   </مقطع>
    <مقطع رقم="١٢٦">وَلَٰكِنَّهُمْ تَرَكُوْا الْأَلِفَ اسْتِغْنَاءً</مقطع>
    <مقطع رقم="١٢٧">إِذْ كَانَ هٰذَا الْكَلَامُ</مقطع>
    <مقطع رقم="١٢٨">لَا يَقَعُ إِلَّا في الِاسْتِفْهَامِ</مقطع>
    <مقطع رقم="١٢٩">وَسَوْفَ تَرَاهُ</مقطع>
    <مقطع رقم="١٣٠">إِنْ شَاءَ اللّٰهُ</مقطع>
    <مقطع رقم="١٣١">مُتَبَيِّنَا أَيْضًا</مقطع>
    <مقطع رقم="١٣٢">فَهِيَ هِٰهُنَا</مقطع>
    <مقطع رقم="١٣٣">بِمَنْزِلَةِ  <حرف>إِنْ</حرف> 
   </مقطع>
    <مقطع رقم="١٣٤">في بَابِ <ص أَ="جُزَيّ">الْجَزَاءِ</ص> 
   </مقطع>
    <مقطع رقم="١٣٥">فَجَازَ تَقْدِيْمُ الِاسْمِ فِيْهَا</مقطع>
    <مقطع رقم="١٣٦">كَمَا جَازَ في قَوْلِكَ</مقطع>
    <مقطع رقم="١٣٧">
       <قول وَتَدٌ="" حُكْمُ="زَ">إَنِ اللّٰهُ أَمْكَنَنِي مِنْ فُلَانٍ فَعَلْتُ كَذَا وَكَذَا</قول> 
   </مقطع>
    <مقطع رقم="١٣٨">وَيُخْتَارُ فِيْهَا النَّصْبُ</مقطع>
    <مقطع رقم="١٣٩">لِأَنَّكَ تُضْمِرُ الْفِعْلَ فِيْهَا</مقطع>
    <مقطع رقم="١٤٠">لِأَنَّ الْفِعْلَ أَوْلَى</مقطع>
    <مقطع رقم="١٤١">إِذَا اجْتَمَعَ هُوَ وَالِاسْمُ</مقطع>
    <مقطع رقم="١٤٢">وَكَذٰلِكَ كُنْتَ فَاعِلًا في  <حرف>إِنْ</حرف> 
   </مقطع>
    <مقطع رقم="١٤٣">لِأنَّهَا إِنَّمَا هِىَ لِلْفِعْلِ</مقطع>
    <مقطع رقم="١٤٤">وَسَتَرَى بَيَانَ ذٰلِكَ</مقطع>
    <مقطع رقم="١٤٥">إِنْ شَاءَ اللّٰهُ</مقطع>
    <مقطع رقم="١٤٦">فَالْأَلِفُ</مقطع>
    <مقطع رقم="١٤٧">إِذَا كَانَ مَعَهَا فِعْلٌ</مقطع>
    <مقطع رقم="١٤٨">بِمَنْزِلَةِ  <حرف>لَوْلَا</حرف> 
   </مقطع>
    <مقطع رقم="١٤٩">وَ<حرف>هَلَّا</حرف> 
   </مقطع>
    <مقطع رقم="١٥٠">إِلَّا أَنَّكَ</مقطع>
    <مقطع رقم="١٥١">إِنْ شِئْتَ رَفَعْتَ فِيْهَا</مقطع>
    <مقطع رقم="١٥٢">
       <بدل>
          <ها>وَهُوَ في الْأَلِفِ</ها>
          <يع>وَالرَّفْعُ مَعَ الْأَلِفِ</يع>
      </بدل>
   </مقطع>
    <مقطع رقم="١٥٣">أَمْثَلُ مِنْهُ في  <حرف>مَتَى</حرف> 
   </مقطع>
    <مقطع رقم="١٥٤">وَنَحْوِهَا</مقطع>
    <مقطع رقم="١٥٥">لِأَنَّهُ قَدْ صَارَ فِيْهَا</مقطع>
    <مقطع رقم="١٥٦">مَعَ أَنَّكَ تَبْتَدِئُ بَعْدَهَا الْأَسْمَاءَ</مقطع>
    <مقطع رقم="١٥٧">أَنَّكَ تُقَدِّمُ الاسْمَ قَبْلَ الْفِعْلِ</مقطع>
    <مقطع رقم="١٥٨">وَالْرَّفْعُ فِيْهَا <ص أَ="جَوَّزَ">عَلَىَ الْجَوَازِ</ص> 
   </مقطع>
    <مقطع رقم="١٥٩">وَلَا يَجُوْزُ ذٰلِكَ</مقطع>
    <مقطع رقم="١٦٠">في  <حرف>هَلَّا</حرف> 
   </مقطع>
    <مقطع رقم="١٦١">وَ<حرف>لَوْلَا</حرف> 
   </مقطع>
    <مقطع رقم="١٦٢">لِأَنَّهُ لَا يُبْتَدَأُ بَعْدَهُمَا الْأَسْمَاءُ</مقطع>
    <مقطع رقم="١٦٣">وَلَيْسَ جَوَازُ الرَّفْعِ في الْأَلِفِ</مقطع>
    <مقطع رقم="١٦٤">مِثْلَ جَوَازِ الرَّفْعِ في</مقطع>
    <مقطع رقم="١٦٥">
       <قول وَتَدٌ="" حُكْمُ="زَ">ضَرَبْتُ زَيْدًا وَعَمْرًا كَلَّمْتُهُ</قول> 
   </مقطع>
    <مقطع رقم="١٦٦">لِأَنَّهُ لَيْسَ هَاهُنَا</مقطع>
    <مقطع رقم="١٦٧">حَرْفٌ هُوَ بِالْفِعْلِ أَوْلَى</مقطع>
    <مقطع رقم="١٦٨">وَإِنَّمَا اخْتِيْرَ هٰذَا</مقطع>
    <مقطع رقم="١٦٩">
       <ص أَ="جَوَّزَ">عَلَىَ الْجَوَازِ</ص> 
   </مقطع>
    <مقطع رقم="١٧٠">وَلِيَكُونَ مَعْنًى وَاحِدًا</مقطع>
    <هارون مجلد="١" صفحة="١٠٠"/>
    <مقطع رقم="١٧١">فَهٰذَا أَقْوَى</مقطع>
    <مقطع رقم="١٧٢">وَالَّذِى يُشْبِهُهُ مِنْ حُرُوْفِ الاسْتِفْهَامِ الْأَلِفُ</مقطع>
    <مقطع رقم="١٧٣">وَاعْلَمْ أَنَّ حُرُوْفَ الاسْتِفْهَامِ</مقطع>
    <مقطع رقم="١٧٤">كُلُّهَا يَقْبُحُ</مقطع>
    <مقطع رقم="١٧٥">أَنْ يَصِيرَ بَعْدَهَا الِاسْمُ</مقطع>
    <مقطع رقم="١٧٦">إِذَا كَانَ الْفِعْلُ بَعْدَ الْاسْمُ</مقطع>
    <مقطع رقم="١٧٧">لَوْ قُلْتَ <قول وَتَدٌ="" حُكْمُ="غَزَّ شَ">هَلْ زَيْدٌ قَامَ</قول> 
   </مقطع>
    <مقطع رقم="١٧٨">وَ<قول وَتَدٌ="" حُكْمُ="غَزَّ شَ">أَيْنَ زَيْدٌ ضَرَبْتَهُ</قول> 
   </مقطع>
    <مقطع رقم="١٧٩">لَمْ يَجُزْ إِلَّا في الشِّعْرِ</مقطع>
    <مقطع رقم="١٨٠">فَإِذَا جَاءَ في الشِّعْرِ</مقطع>
    <مقطع رقم="١٨١">نَصَبْتَهُ إِلَّا الْأَلْفَ</مقطع>
    <مقطع رقم="١٨٢">فَإِنَّهُ يَجُوْزُ فِيْهَا</مقطع>
    <مقطع رقم="١٨٣">الرَّفْعُ وَالنَّصْبُ</مقطع>
    <مقطع رقم="١٨٤">لِأَنَّ الْأَلِفَ</مقطع>
    <مقطع رقم="١٨٥">قَدْ يُبْتَدَأَ بَعْدَهَا الِاسْمُ</مقطع>
    <مقطع رقم="١٨٦">فَإِنْ جِئْتَ في سَائِرِ حُرُوْفِ الاسْتِفْهَامِ بِاسْمٍ</مقطع>
    <مقطع رقم="١٨٧">وَبَعْدَ ذٰلِكَ الِاسْمِ اسْمٌ مِنْ فِعْلٍ</مقطع>
    <مقطع رقم="١٨٨">نَحْوُ  <حرف>ضَارِبٌ</حرف> 
   </مقطع>
    <مقطع رقم="١٨٩">
       <ص أَ="جَوَّزَ">جَازَ في الْكَلَامِ</ص> 
   </مقطع>
    <مقطع رقم="١٩٠">وَلَا يَجُوْزُ فِيْهِ الْنَّصْبُ</مقطع>
    <مقطع رقم="١٩١">إِلّا في الْشَّعَرِ</مقطع>
    <مقطع رقم="١٩٢">لَوْ قُلْتَ</مقطع>
    <مقطع رقم="١٩٣">
       <قول وَتَدٌ="" حُكْمُ="جَ">هَلْ زَيْدٌ أَنَا ضَارِبُهُ</قول> 
   </مقطع>
    <مقطع رقم="١٩٤">لَكَانَ <حكم>جَيِّدًا فِي الْكَلَامِ</حكم>
   </مقطع>
    <مقطع رقم="١٩٥">لِأَنَّ  <حرف>ضَارِبًا</حرف> اسْمٌ</مقطع>
    <مقطع رقم="١٩٦">وَإِنْ كَانَ في مَعْنَىً الْفِعْلِ</مقطع>
    <مقطع رقم="١٩٧">وَيَجُوْزُ النَّصْبُ فِي الشِّعْرِ</مقطع>
</باب>
