    <مقطع رقم="٤٥">
       <ص أَ="ضَمَرَ">عَلَىَ إِضْمَارِ الْفِعْلِ</ص> 
   </مقطع>
    <مقطع رقم="٤٦">وَلَا تَذْكُرُهُ</مقطع>
    <مقطع رقم="٤٧">جَازَ</مقطع>
    <مقطع رقم="٤٨">وَإِنَّمَا جَازَ ذٰلِكَ</مقطع>
    <مقطع رقم="٤٩">لِأَنَّ فِيْهِ مَعْنَى <ص أَ="حُضَضْ">الْتَّحْضِيْضِ</ص> وَ<ص أَ="أَمَرَ">الْأَمْرِ</ص> 
   </مقطع>
    <مقطع رقم="٥٠">فَجَازَ فِيْهِ مِمَّا يَجُوْزُ في ذٰلِكَ</مقطع>
    <مقطع رقم="٥١">وَلَوْ قُلْتَ</مقطع>
    <مقطع رقم="٥٢">
       <قول وَتَدٌ="" حُكْمُ="غَنِّ">سَوْفَ زَيْدًا أَضْرِبُ</قول> 
   </مقطع>
    <مقطع رقم="٥٣">لَمْ يَحْسُنْ</مقطع>
    <مقطع رقم="٥٤">أَوْ <قول وَتَدٌ="" حُكْمُ="غَنِّ">قَدْ زَيْدًا لَقَيْتُ</قول> 
   </مقطع>
    <مقطع رقم="٥٥">لَمْ يَحْسُنْ</مقطع>
    <مقطع رقم="٥٦">لِأَنَّهَا إِنَّمَا وُضِعَتْ لِلْأَفْعَالِ</مقطع>
    <مقطع رقم="٥٧">إِلَّا أَنَّهُ جَازَ في تِلْكَ الْأَحْرُفِ</مقطع>
    <مقطع رقم="٥٨">التَّأْخِيْرُ وَالْإِضْمَارُ</مقطع>
    <مقطع رقم="٥٩">لِمَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع رقم="٦٠">مِنْ <ص أَ="حُضَضْ">التَّحْضِيْضِ</ص> وَ<ص أَ="أَمَرَ">الْأَمْرِ</ص> 
   </مقطع>
    <مقطع رقم="٦١">وَحُرُوْفُ الِاسْتِفْهَامِ</مقطع>
    <مقطع رقم="٦٢">كَذٰلِكَ <بدل>
          <ها>لَا يَلِيْهَا إِلَا الْفِعْلُ</ها>
          <بكا>لَا يَلِيْهَا إِلَا الْفِعْلُ</بكا>
          <يع>بُنِيَتْ لِلْفِعْلِ</يع>
      </بدل>
   </مقطع>
    <مقطع رقم="٦٣">إِلَّا أَنَّهُمْ قَدْ تَوَسَّعُوْا فِيْهَا</مقطع>
    <هارون مجلد="١" صفحة="٩٨"/>
    <مقطع رقم="٦٤">فَابْتَدَءُوا بَعْدَهَا الْأَسْمَاءَ</مقطع>
    <مقطع رقم="٦٥">وَالْأَصْلُ غَيْرُ ذٰلِكَ</مقطع>
    <مقطع رقم="٦٦">أَلَا تَرَىَ</مقطع>
    <مقطع رقم="٦٧">
       <هم>أَنَّهُمْ يَقُوْلُوْنَ</هم>
   </مقطع>
    <مقطع رقم="٦٨">
       <قول وَتَدٌ="" حُكْمُ="سَ">هَلْ زَيْدٌ مُنْطَلِقٌ</قول> 
   </مقطع>
    <مقطع رقم="٦٩">وَ<قول وَتَدٌ="" حُكْمُ="سَ">هَلْ زَيْدٌ في الدَّارِ</قول> 
   </مقطع>
    <مقطع رقم="٧٠">وَ<قول حُكْمُ="سَ">كَيْفَ زَيْدٌ آخِذٌ</قول> 
   </مقطع>
    <مقطع رقم="٧١">فَإِنْ قُلْتَ</مقطع>
    <مقطع رقم="٧٢">
       <قول وَتَدٌ="" حُكْمُ="قَ شَ">هَلْ زَيْدًا رَأَيْتَ</قول> 
   </مقطع>
    <مقطع رقم="٧٣">وَ<قول وَتَدٌ="" حُكْمُ="قَ شَ">هَلْ زَيْدٌ ذَهَبَ</قول> 
   </مقطع>
    <مقطع رقم="٧٤">قَبُحَ وَلَمْ يَجُزْ</مقطع>
    <مقطع رقم="٧٥">إِلَّا فَىِ الْشِّعْرِ</مقطع>
    <مقطع رقم="٧٦">لِأَنَّهُ</مقطع>
    <قاعدة>
       <مقطع رقم="٧٧">لَمَّا اجْتَمَعَ الِاسْمُ وَالْفِعْلُ</مقطع>
       <مقطع رقم="٧٨">
          <ص أَ="حمل">حَمَلُوْهُ عَلَى الْأَصْلِ</ص> 
      </مقطع>
   </قاعدة>
    <مقطع رقم="٧٩">فَإِن اُضْطُرَّ شَاعِرٌ</مقطع>
    <مقطع رقم="٨٠">فَقَدَّمَ الِاسْمَ</مقطع>
    <مقطع رقم="٨١">نَصَبَ</مقطع>
    <مقطع رقم="٨٢">كَمَا كُنْتَ فَاعِلًا ذٰلِكَ</مقطع>
    <مقطع رقم="٨٣">بِ‍  <حرف>قَدْ</حرف> وَنَحْوِهَا</مقطع>
    <مقطع رقم="٨٤">وَهُوَ فِي هِٰذِهِ أَحْسَنُ</مقطع>
    <مقطع رقم="٨٥">لِأَنَّهُ يُبْتَدَأُ بَعْدَهَا الْأَسْمَاءُ</مقطع>
    <مقطع رقم="٨٦">وَإِنَّمَا فَعَلُوْا ذَٰلِكَ بِالِاسْتِفْهَامِ</مقطع>
    <مقطع رقم="٨٧">لِأَنَّهُ كَالْأَمْرِ</مقطع>
    <مقطع رقم="٨٨">فَىِ أَنَّهُ غَيْرُ وَاجِبٍ</مقطع>
    <مقطع رقم="٨٩">وَأَنَّهُ يُرِيْدُ بِهِ مِنَ الْمُخَاطَبِ</مقطع>
    <مقطع رقم="٩٠">أَمْرًا لَمْ يَسْتَقِرَّ عَنْدَ السَّائِلِ</مقطع>
    <مقطع رقم="٩١">أَلَا تَرَى أَنَّ جَوَابَهُ جَزْمٌ</مقطع>
    <مقطع رقم="٩٢">فَلِهٰذَا اخْتِيْرَ النَّصْبُ</مقطع>
    <مقطع رقم="٩٣">وَكَرِهُوا تَقْدِيْمَ الِاسْمِ</مقطع>
    <مقطع رقم="٩٤">لِأَنَّهَا حُرُوْفٌ ضَارَعَتْ بِمَا بَعْدَهَا</مقطع>
    <مقطع رقم="٩٥">مَا بَعْدَ حُرُوْفِ <ص أَ="جُزَيّ">الْجَزَاءِ</ص> 
   </مقطع>
    <مقطع رقم="٩٦">وَجَوَابُهَا كَجَوابِهِ</مقطع>
    <مقطع رقم="٩٧">وَقَدْ يَصِيْرُ مَعْنَى حَدِيْثُهَا إِلَيْهِ</مقطع>
    <مقطع رقم="٩٨">وَهِيَ غَيْرُ وَاجِبَةٍ</مقطع>
    <مقطع رقم="٩٩">كَالْجَزَاءِ</مقطع>
    <مقطع رقم="١٠٠">فَقَبُحَ تَقْدِيْمُ الِاسْمِ لِهٰذَا</مقطع>
    <مقطع رقم="١٠١">أَلَا تَرَى</مقطع>
    <مقطع رقم="١٠٢">أَنَّكَ إِذَا قُلْتَ</مقطع>
