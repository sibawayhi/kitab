    <مقطع رقم="١٠">وَ<حرف>لَمَّا</حرف> 
   </مقطع>
    <مقطع رقم="١١">وَنَحُوهُنَّ</مقطع>
    <مقطع رقم="١٢">فَإِنُ اضْطُرَّ شَاعِرٌ</مقطع>
    <مقطع رقم="١٣">فَقَدَّمَ الاسْمَ</مقطع>
    <مقطع رقم="١٤">وَقَدْ أَوْقَعَ الْفَعْلَ</مقطع>
    <مقطع رقم="١٥">عَلَى <ص أَ="سَبَبُ">شَيْءٍ مِنَ سَبَبِهِ</ص> 
   </مقطع>
    <مقطع رقم="١٦">لَمْ يَكُنْ <ص أَ="حَدَّدَ">حَدُّ الْإِعْرَابِ</ص> إِلَّا النَّصْبَ</مقطع>
    <مقطع رقم="١٧">وَذٰلِكَ نَحْوُ</مقطع>
    <مقطع رقم="١٨">
       <قول حُكْمُ="شَ">لَمْ زَيْدًا أَضْرِبْهُ</قول> 
   </مقطع>
    <مقطع رقم="١٩">إِذَا اضْطُرَّ شَاعِرٌ</مقطع>
    <مقطع رقم="٢٠">فَقَدَّمَ</مقطع>
    <مقطع رقم="٢١">لَمْ يَكَنْ إِلَّا الْنَّصْبُ</مقطع>
    <مقطع رقم="٢٢">في  <حرف>زَيْدٍ</حرف> 
   </مقطع>
    <مقطع رقم="٢٣">لَيْسَ غَيْرُ</مقطع>
    <مقطع رقم="٢٤">لَوْ كَانَ في شِعْرٍ</مقطع>
    <مقطع رقم="٢٥">لِأَنَّهُ يُضْمِرُ الْفَعْلَ</مقطع>
    <مقطع رقم="٢٦">إِذَا كَانَ لَيْسَ مِمَّا يَلِيْهِ الْاسْمُ</مقطع>
    <مقطع رقم="٢٧">
       <هم>كَمَا فَعَلُوْا ذٰلِكَ</هم>في مَوَاضِعَ</مقطع>
    <مقطع رقم="٢٨">سَتَرَاهَا إِنْ شَاءَ اللّٰهُ</مقطع>
    <مقطع رقم="٢٩">وَأَمَّا مَا يَجُوْزُ فِيْهِ الْفِعْلُ</مقطع>
    <مقطع رقم="٣٠">مُضْمَرًا ومُظْهَرًا</مقطع>
    <مقطع رقم="٣١">مُقَدَّمًا وَمُؤَخَّرًا</مقطع>
    <مقطع رقم="٣٢">وَلَا يَسْتَقِيْمُ أَنْ يُبْتَدَأَ بَعْدَهُ الْأَسْمَاءُ</مقطع>
    <مقطع رقم="٣٣">فً‍  <حرف>هَلَّا</حرف> 
