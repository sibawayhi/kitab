    <مقطع رقم="١٠٤">فَكَأَنَّكَ قُلْتَ</مقطع>
    <مقطع رقم="١٠٥">
       <قول وَتَدٌ="" حُكْمُ="نَ">حَيْثُمَا يَكُنْ آتِهِ</قول> 
