<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٨"
     درنبورج="١-٧"
     هارون="١-٢٦"
     يعقوب="١-٥٣"
     ابكاء="١-٧٣"
     رقم="٧">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَابُ مَا يَحْتَمِلُ الْشِعْرُ</مقطع>
   </عنوان>
    <فقرة>
       <مقطع رقم="٢">اِعْلَمْ أَنَّهُ يَجُوْزُ في الشِّعْرِ مَا لَا يَجُوْزُ في الْكَلَامِ مِنْ صَرْفِ مَا لَا يَنْصَرِفُ</مقطع>
       <مقطع رقم="٣">يُشَبِّهُوْنَهُ بِمَا يَنْصَرِفُ مِنْ الْأَسْمَاءِ</مقطع>
       <مقطع رقم="٤">لِأَنَّهَا أَسْمَاءٌ كَمَا أَنَّهَا أَسْمَاءُ</مقطع>
       <مقطع رقم="٥">وَحَذْفِ مَا لَا يُحْذَفُ</مقطع>
       <مقطع رقم="٦">يُشَبِّهُوْنَهُ بِمَا قَدْ حُذِفَ وَاسْتُعْمِلَ مَحْذُوفًا</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٧">كَمَا قَالَ <شاعر>الْعَجَّاجُ</شاعر>
      </مقطع>
       <شاهدة رقم="١" xml:id="٧-١">
          <بيت>
             <مصراع>قَوَاطِنا مَكَّةَ مِنْ وُرْقِ الْحَمِىَ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٢٦"/>
       <مقطع رقم="٨">يُرِيْدُ الْحَمَامُ</مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٩">وَقَالَ خِفَافَ بْنِ نُدْبَةٌ السُّلَمِىُّ</مقطع>
       <شاهدة رقم="٢" xml:id="٧-٢">
          <بيت>
             <مصراع>كَنَوَاحِ رِيَشِ حَمَّامةٍ نَجْدِيَّةٍ</مصراع>
             <مصراع>وَمَسَحْتِ بِاللِّثَتَينَ عَصْفَ الْإِثْمِدِ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٠">وَكَمَا قَالَ</مقطع>
       <شاهدة رقم="٣" xml:id="٧-٣">
          <بيت>
             <مصراع>[هَلْ فَعَرَفَ الْدَارُ عَلَى تِبْرَاكا]</مصراع>
             <مصراع>دَارٌ لِسُعْدَى إِذْهِ مِنْ هَوَاكَا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١١">وَقَالَ</مقطع>
       <شاهدة رقم="٤" xml:id="٧-٤">
          <بيت>
             <مصراع>فَطِرْتُ بمَنُصَلَىْ فِي يَعْمَلَاتٍ</مصراع>
             <مصراع>دَوَامِى الْأَيِّدُ يَخْبِطْنَ السَرِيْحا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٢">وَكَمَا قَالَ النَّجَاشِيّ</مقطع>
       <شاهدة رقم="٥" xml:id="٧-٥">
          <بيت>
             <مصراع>فَلَسْتُ بِآَتِيِهَ وَلَا أَسْتَطِيْعُهْ</مصراع>
             <مصراع>وِلَاكِ أَسْقِنِي إِنِ كَانَ مَاؤُكِ ذَا فَضْلِ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٢٧"/>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٣">وَكَمَا قَالَ مَالِكٌ بْنِ خُرَيْمٍ الْهَمْدَانِيُّ</مقطع>
       <شاهدة رقم="٦" xml:id="٧-٦">
          <بيت>
             <مصراع>فَإِنْ يَكُ غَثَّا أَوْ سَمِيْنا فَإِنَّنِىٓ</مصراع>
             <مصراع>سَأَجْعَلُ عَيْنَيْهِ لِنَفْسِهِ مُقنّعا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٤">وَقَالَ الْأَعْشَى</مقطع>
       <شاهدة رقم="٧" xml:id="٧-٧">
          <بيت>
             <مصراع>وَأَخُوْ الْغَوَانِ مَتَىَ يَشَأْ يَصْرِ مِنْهَ</مصراع>
             <مصراع>وَيَعُدْنَ أَعْدَاءً بُعَيْدَ وِدَادِ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٥">وَرُبَّمَا مَدُّوْا مِثْلَ  <حرف>مَسَاجِدَ</حرف>  وَ<حرف>مَنَابِرَ</حرف>
      </مقطع>
       <مقطع رقم="١٦">فَيَقُوْلُوْنَ  <حرف>مَساجِيدُ</حرف>  وَ<حرف>مْنَابِيرُ</حرف>
      </مقطع>
       <مقطع رقم="١٧">شَبَّهُوْهُ بِمَا جُمِعَ عَلَى غَيْرِ وَاحِدِهِ فِي الْكَلَامِ</مقطع>
       <مقطع رقم="١٨">كَمَا قَالَ الْفَرَزْدَقُ</مقطع>
       <شاهدة رقم="٨" xml:id="٧-٨">
          <بيت>
             <مصراع>تَنْفِيَ يَدَاهَا الْحَصَى فِي كُلَّ هَاجَرٍ</مصراع>
             <مصراع>نَفْىَ الدَنَانِيّرِ تَنْقَادُ الْصَّيَّارِيِّفِ</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٢٨"/>
   </فقرة>
    <فقرة>
       <مقطع رقم="١٩">وَقَدْ يبلغون بِالْمُعْتَلِّ الْأَصْلَ فَيَقُوْلُوْنَ  <حرف>رادِدٌ</حرف>  فِي  <حرف>رَادٌّ</حرف>  و<حرف>ضَنِنُوا</حرف>  فِي  <حرف>ضَّنُّوا</حرف>  و<حرف>مَرَرْتمْ بِجَوَارِيَ قَبْلُ</حرف>
      </مقطع>
       <مقطع رقم="٢٠">قَالَ قَعْنَبُ بِنُ أُمّ صَاحِبٍ</مقطع>
       <شاهدة رقم="٩" xml:id="٧-٩">
          <بيت>
             <مصراع>مَهْلَا أَعْاذِلَّ قَدْ جَرَّبْتِ مِنْ خُلُقِىْ</مصراع>
             <مصراع>أَنَّىَ أَجُوُدُ لِأَقْوَامٍ وَإِنْ ضَنِنُوا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٢١">وَمَنْ الْعَرَبِْ مَنْ يُثَقِّلُ الْكَلِمَةَ إِذَا وَقَفَ عَلَيْهَا وَلَا يُثَقِّلُهَا فِي الْوَصْلِ</مقطع>
       <مقطع رقم="٢٢">فَإِذَا كَانَ في الْشِّعْرِ فَهُمْ يُجْرُونَهُ فِي الْوَصْلِ عَلَى حَالِهِ فِي الْوَقْفِ</مقطع>
       <مقطع رقم="٢٣">نَحْوُ  <حرف>سَبْسَبَّا</حرف>  وَ<حرف>كَلْكَلَّا</حرف>
      </مقطع>
       <مقطع رقم="٢٤">لِأَنَّهُمْ قَدْ يُثْقِلُونَهُ فِي الْوَقْفِ فَأَثْبِتُوهُ فِي الْوَصْلِ</مقطع>
       <مقطع رقم="٢٥">كَمَا أَثْبَتُوْا الْحَذْفَ فِي قَوْلِهِ لِنَفْسِهِ مَقْنَعَا وَإِنَّمَا حَذْفُهُ فِي الْوَقْفِ</مقطع>
       <مقطع رقم="٢٦">قَالَ رُؤْبَةُ</مقطع>
       <شاهدة رقم="١٠" xml:id="٧-١٠">
          <بيت>
             <مصراع>ضَخْمٌ يُحِبُّ الْخُلُقَ الْأَضْخَمَّا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٢٧">يُرْوَىَ بِكَسْرِ الْهَمْزَةِ وَفَتْحِهَا وَقَالَ بَعْضُهُمْ الضِّخَمَّا بِكَسْرِ الْضَّادِ <هارون مجلد="١" صفحة="٢٩"/>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٢٨">وَقَالَ أَيْضا فِي مِثْلِهِ وَهُوَ الشَّمَّاخِ</مقطع>
       <شاهدة رقم="١١" xml:id="٧-١١">
          <بيت>
             <مصراع>لَهُ زَجَلٌ كَأَنَّهُ صَوْتُ حَادٍ</مصراع>
             <مصراع>إِذَا طَلَبَ الْوَسِيْقَة أَوْ زَمِيْرُ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٢٩">وَقَالَ حَنْظَلَةُ بْنِ فَاتِكٍ</مقطع>
       <شاهدة رقم="١٢" xml:id="٧-١٢">
          <بيت>
             <مصراع>وَأَيْقَنَ أَنَّ الْخَيْلَ إِنْ تَلْتَبِسْ بِهِ</مصراع>
             <مصراع>يَكُنْ لَفَسَيَلِ الْنَّخْلِ بَعْدَهُ آَبِرُ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٠">وَقَالَ رَجُلٌ مِنْ بَاهِلَةَ</مقطع>
       <شاهدة رقم="١٣" xml:id="٧-١٣">
          <بيت>
             <مصراع>أَوْ مُعْبَرُ الظَّهْرِ يُنْبِيْ عَنْ وَلِيَّتِهِ</مصراع>
             <مصراع>مَا حَجَّ رَّبَّهُ فِي الْدُّنْيَا وَلَا أَعْتمرّا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣١">وَقَالَ الْأَعْشَى</مقطع>
       <شاهدة رقم="١٤" xml:id="٧-١٤">
          <بيت>
             <مصراع>الْصَّبَا مَا لَهُ مِنْ مَجْدٍ تَلِيْدٍ وَمَا لَهُ</مصراع>
             <مصراع>مِنَ الْرِّيحِ حَظٌّ لَا الْجَنُوْبِ وَلَا الصَبَبا</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٣٠"/>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٢">وَقَالَ</مقطع>
       <شاهدة رقم="١٥" xml:id="٧-١٥">
          <بيت>
             <مصراع>بَيَّنَّاهُ فِي دَارِ صِدْقٍ قَدْ أَقَامَ بِهَا</مصراع>
             <مصراع>حِيْنَا يُعْلَلْنا وَمَا نُعَللَّهُ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٣">وَيَحْتَمِلُوْنَ قُبْحَ الْكَلَامِ حَتَّى يَضَعُوْهُ فِي غَيْرِ مَوْضِعِهِ لِأَنَّهُ مُسْتَقِيْمٌ لَيْسَ فِيْهِ <بدل>
             <ها>نَقْصٌ</ها>
             <بكا>نَقْضٌ</بكا>
             <يع>نَقْضٌ</يع>
         </بدل>
      </مقطع>
       <مقطع رقم="٣٤">فَمِنْ ذٰلِكَ قَوْلُهُ</مقطع>
       <شاهدة رقم="١٦" xml:id="٧-١٦">
          <بيت>
             <مصراع>صَدَدْتِ فَأَطْوَلْتِ الْصُّدُوْدَ وَقَلَّمَا</مصراع>
             <مصراع>وِصَالٌ عَلٌّ طُولِ الْصُّدُوْدِ يَدُوْمُ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٥">وَإِنَّمَا الْكَلَامُ <قول>وَقَلَّ مَا يَدُوْمُ وِصَالٌ</قول>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٦">وَجَعَلُوا مَا لَا يَجْرِي فِي الْكَلَامِ إِلَّا ظَرْفًا بِمَنْزِلَةِ غَيْرِهِ مِنْ الْأَسْمَاءِ</مقطع>
       <مقطع رقم="٣٧">وَذٰلِكَ قَوْلُ الْمَّرَارِ بْنِ سَلَامَةَ الْعِجْلِىُّ</مقطع>
       <شاهدة رقم="١٧" xml:id="٧-١٧">
          <بيت>
             <مصراع>وَلَا يَنْطِقُ الْفَحْشَاءَ مَنْ كْانَ مِنْهْمْ</مصراع>
             <مصراع>إِذَا جَلَسُوْا مِنَّا وَلَا مِنْ سَوَائِنَا</مصراع>
         </بيت>
      </شاهدة>
       <هارون مجلد="١" صفحة="٣١"/>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٨">وَقَالَ الْأَعْشَى</مقطع>
       <شاهدة رقم="١٨" xml:id="٧-١٨">
          <بيت>
             <مصراع>وَمَا قَصَدَتْ مِنْ أَهْلِهَا لِسَوَائِكَا</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٣٩">وَقَالَ خِطَامٌ الْمُجَاشِعِىِّ</مقطع>
       <شاهدة رقم="١٩" xml:id="٧-١٩">
          <بيت>
             <مصراع>وَصَالِيَاتٍ كَكَمَا يُؤَثْفَيْنْ</مصراع>
         </بيت>
      </شاهدة>
   </فقرة>
    <فقرة>
       <مقطع رقم="٤٠">فَعَلُوْا ذٰلِكَ لِأَنَّ مَعْنَى  <حرف>سَوَاء</حرف>  مَعْنَى  <حرف>غَيْر</حرف>  وَمَعْنَى الْ‍ـ<حرف>كَاف</حرف>  مَعْنَى  <حرف>مِثْل</حرف>
      </مقطع>
   </فقرة>
    <فقرة>
       <مقطع رقم="٤١">وَلَيْسَ شَيْءٌ يُضْطَرُّونَ إِلَيْهِ إِلَّا وَهُمْ يُحَاوِلُوْنَ بِهِ وَجَهًا</مقطع>
       <مقطع رقم="٤٢">وَمَا يَجُوْزُ فِي الْشِعْرِ أَكْثَرَ مِنْ أَنْ أَذْكُرَهُ لَكَ هٰهُنَا</مقطع>
       <مقطع رقم="٤٣">لِأَنَّ هٰذَا مَوْضِعُ جُمَلٍ</مقطع>
       <مقطع رقم="٤٤">وَسَنُبَيِّنُ ذٰلِكَ فِيْمَا يَسْتَقْبِلُ إِنْ شَاءَ اللّٰهُ</مقطع>
       <هارون مجلد="١" صفحة="٣٢"/>
   </فقرة>
</باب>

