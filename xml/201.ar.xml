<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٣٧٥"
     درنبورج="١-٣٢٧"
     هارون="٢-٢٤٤"
     يعقوب="٢-٢٦٣"
     البكاء="٣-٢٦٦"
     رقم="٢٠١">
   <عنوان>
      <مقطع>هذا باب يحذف المستثنى فيه استخفافا</مقطع>
   </عنوان>
   <مقطع>وذلك قولك ليس غير و ليس إلا كأنه قال ليس إلا ذاك<هارون مجلد="٢" صفحة="٣٤٤"/>وليس غير ذاك ولكنهم حذفوا ذلك تخفيفا واكتفاء بعلم المخاطب مل يعنى</مقطع>
   <مقطع>وسمعنا بعض العرب الموثوق بهم يقول ما منهم مات حتى رأيته في حال كذا [ وكذا ] وإنما يريد ما منهم واحد مات</مقطع>
   <مقطع>ومثل ذلك قوله تعالى جده<آية>وإن من أهل الكتاب إلا ليؤمنن به قبل موته</آية>ومثل ذلك من الشعر قول النابغة</مقطع><شاهدة>
         <بيت>
            <مصراع>كأنك من جِمال بنى أُقَيْشٍ</مصراع>
            <مصراع>يُقَعْقَعُ خَلْفَ رِجْلَيْه بِشَنِّ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>أى كأنك جمل من جمال بنى أقيش</مقطع>
   <مقطع>ومثل ذلك أيضا قوله</مقطع><شاهدة>
         <بيت>
            <مصراع>لو قلتَ ما فى قومِها لم تِيثَمِ</مصراع>
            <مصراع>يَفضُلهُا فى حَسَبٍ ومِيسَمِ</مصراع>
         </بيت>
      </شاهدة>
      <هارون مجلد="٢" صفحة="٣٤٥"/>
      <مقطع>يريد ما في قومها أحد فحذفوا هذا كما قالوا لو أن زيدا هنا وإنما يريدون لكان كذا وكذا</مقطع>
   <مقطع>وقولهم ليس أحد أي ليس هنا أحد</مقطع>
   <مقطع>فكل ذلك حذف تخفيفا واستغناء بعلم المخاطب بما يعني</مقطع>
   <مقطع>ومثل البيتين الأولين قول الشاعر وهو ابن مقبل</مقطع><شاهدة>
         <بيت>
            <مصراع>وما الدهرُ إلاّ تارتانِ فمنهما</مصراع>
            <مصراع>أَموتُ وأُخرى أَبتغى العيشَ أَكْدَحُ</مصراع>
         </بيت>
      </شاهدة>

   <مقطع>إنما يريد منهما تارةٌ أموتُ وأُخرى</مقطع>
   <مقطع>ومثل قولهم ليس غير هذا الذي أمس يريد الذي فعل أمس<هارون مجلد="٢" صفحة="٣٤٦"/>وقولهم وهو العجاج</مقطع><شاهدة>
         <بيت>
            <مصراع>بعد اللَّتيَّا والَّتيَّا والتِّي</مصراع>
            <مصراع/>
         </بيت>
      </شاهدة>

   <مقطع>فليس حذف المضاف إليه في كلامهم بأشد من حذف تمام الاسم</مقطع>
</باب>
