 <باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi" رقم="٣١٦">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ إِرَاْدَةِ اللَّفْظِ بِالْحَرْفِ الْوَاْحِدِ</مقطع>
   </عنوان>
    <مقطع رقم="٢">قَاْلَ الْخَلِيْلُ يَوْمًا وَسَأَلَ أَصْحَاْبَهُ</مقطع>
    <مقطع رقم="٣">
        <اقتباس>كَيْفَ تَقُوْلُوْنَ إِذَا أَرَدْتُمْ أَنْ تَلْفَظُوا بِالْكَاْفِ الَّتِي فِي  <حرف>لَكَ</حرف> وَالْكَاْفِ الَّتِي فِي  <حرف>مَاْلِكَ</حرف> وَالْبَاْءُ الَّتِي فِي  <حرف>ضَرْبِ</حرف>
        </اقتباس>  
   </مقطع>
    <مقطع رقم="٤">فَقِيْلَ لَهُ  <اقتباس>نَقُوُلُ  <حرف>بَاْء كَاْف</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٥">فَقَاْلَ  <اقتباس>إِنَّمَا جِئْتُمْ بِالِٱسْمِ وَلَمْ تَلْفَظُوا بِالْحَرْفِ</اقتباس> 
   </مقطع>
    <مقطع رقم="٦">وَقَاْلَ  <اقتباس>أَقُوْلُ  <حرف>كَهْ وَبِهْ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٧">فَقُلْنَا  <اقتباس>لِمَ أَلْحَقْتَ الْهَاْءَ</اقتباس> 
   </مقطع>
    <مقطع رقم="٨">فَقَاْلَ  <اقتباس>رَأَيْتَهُمْ قَاْلُوْا  <حرف>عِهْ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٩">
        <اقتباس>فَأَلْحَقُوا هَاْءً حَتَّى صَيَّرُوْهَا يُسْتَطَاْعُ الْكَلَاْمُ بِهَا</اقتباس> 
   </مقطع>
    <مقطع رقم="١٠">
        <اقتباس>لِأَنَّهُ لَا يُلْفَظُ بِحَرْفٍ</اقتباس> 
   </مقطع>
    <مقطع رقم="١١">فَإِنْ وَصَلْتَ قُلْتَ  <قول>كَ وَ بَ فَاعْلَمْ يَا فَتَى</قول> 
   </مقطع>
    <مقطع رقم="١٢">كَمَا قَاْلُوْا  <قول>عِ يَا فَتَى</قول> 
   </مقطع>
    <مقطع رقم="١٣">فَهَذِهِ طَرِيْقَةُ كُلّ حَرْفٍ كَاْنَ مُتَحَرِّكًا</مقطع>
    <مقطع رقم="١٤">وَقَدْ يَجُوْزُ أَنْ يَكُوْنَ الْأَلِفُ هُنَا بِمَنْزِلَةِ الْهَاْءِ</مقطع>
    <مقطع رقم="١٥">لِقُرْبِهَا مِنْهَا وَشِبْهِهَا بِهَا</مقطع>
    <مقطع رقم="١٦">فَتَقُوْلُ  <حرف>بِا</حرف> وَ<حرف>كَا</حرف> 
   </مقطع>
    <مقطع رقم="١٧">كَمَا تَقُوْلُ  <حرف>أَنَا</حرف> 
   </مقطع>
    <هارون مجلد="3" صفحة="320"/>
    <مقطع رقم="١٨">وَسَمِعْتُ مِنَ الْعَرَبِ مَنْ يَقُوْلُ</مقطع>
    <مقطع رقم="١٩">
        <قول>أَلَا تَا بَلَى فَا</قول> 
   </مقطع>
    <مقطع رقم="٢٠">فَإِنَّمَا أَرَاْدُوْا  <قول>أَلَا تَفْعَلْ</قول> وَ<قول>بَلَى فَافْعَلْ</قول> 
   </مقطع>
    <مقطع رقم="٢١">وَلَكِنَّهُ قَطَعَ كَمَا كَاْنَ قَاْطِعًا بِالْأَلِفِ فِي  <حرف>أَنَا</حرف> 
   </مقطع>
    <مقطع رقم="٢٢">وَشَرِكَتْ الْأَلِفُ الْهَاْءَ كشَرَكْتِهَا فِي قَوْلِهِ  <حرف>أَنَا</حرف> 
   </مقطع>
    <مقطع رقم="٢٣">بَيَّنُوْهَا بِالْأَلِفِ كَبَيَاْنِهِمْ بِالْهَاْءِ فِي  <حرف>هِيَهْ</حرف> وَ<حرف>هُنَّهْ</حرف> وَ<حرف>بَغْلَتِيَهْ</حرف> 
   </مقطع>
    <مقطع رقم="٢٤">قَاْلَ الْرَّاْجِزُ</مقطع>
    <شاهدة رقم="١" xml:id="٣١٦-1">
       <بيت>
          <مصراع>بِالْخَيْرِ خَيْرَاْتٍ وَإِنْ شَرَّا فَا</مصراع>
          <مصراع>وَلَا أُرِيْدُ الشَّّرَّ إِلَّا أَنْ تَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٢٥">يُرِيْدُ  <قول>إِنْ شَرًّا فَشَرٌّ وَلَا أُرِيْدُ الشَّّرَّ إِلَّا أَنْ تَشَاْءَ</قول> 
   </مقطع>
    <مقطع رقم="٢٦">ثُمَّ قَاْلَ  <اقتباس>كَيْفَ تَلْفُظُونَ بِالْحَرْفِ السَّّاْكِنِ نَحْوَ يَاْءِ  <حرف>غُلَاْمِي</حرف> وَبَاْءِ  <حرف>اضْرِبْ</حرف> وَدَاْلِ  <حرف>قَدْ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٢٧">فَأَجَاْبُوْا بِنَحْوٍ مِمَّا أَجَاْبُوْا فِي الْمَرَّةِ الْأُوْلَى</مقطع>
    <مقطع رقم="٢٨">فَقَاْلَ  <اقتباس>أَقُوْلُ  <حرف>إِبْ</حرف> وَ<حرف>إِيْ</حرف> وَ<حرف>إِدْ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٢٩">
        <اقتباس>فَأُلْحِقُ أَلِفًا مَوْصُوْلَةً</اقتباس> 
   </مقطع>
    <مقطع رقم="٣٠">قَاْلَ  <اقتباس>كَذَاْكَ أَرَاْهُمْ صَنَعُوَا بِالسَّاْكِنِ</اقتباس> 
   </مقطع>
    <مقطع رقم="٣١">
        <اقتباس>أَلَا تَرَاْهُمْ قَاْلُوْا  <حرف>ابْنٌ</حرف> وَ<حرف>ٱسْمٌ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٣٢">
        <اقتباس>حَيْثُ أَسْكَنُوا الْبَاْءِ وَاْلسِّينَ</اقتباس> 
   </مقطع>
    <مقطع رقم="٣٣">وَأَنْتَ لَا تَسْتَطِيْعُ أَنْ تُكَلِّمَ بِسَاْكِنٍ فِي أَوَّلِ ٱسْمٍ</مقطع>
    <مقطع رقم="٣٤">كَمَا لَا تَصِلُ إِلَى اللَّّفْظِ بِهَذِهِ السَّّوَاْكِنِ</مقطع>
    <مقطع رقم="٣٥">فَأَلْحَقْتَ أَلِفًا حَتَّى وَصَلْتَ إِلَى اللَّّفْظِ بِهَا</مقطع>
    <مقطع رقم="٣٦">فَكَذٰلِكَ تُلْحِقُ هَذِهِ الْأَلِفَاْتِ</مقطع>
    <مقطع رقم="٣٧">حَتَّى تَصِلَ إِلَى اللَّّفْظِ بِهَا</مقطع>
    <مقطع رقم="٣٨">كَمَا أَلْحَقْتَ الْمُسَكَّنَ الْأَوَّلَ فِي الْٱسْمِ</مقطع>
    <مقطع رقم="٣٩">وَقَاْلَ بَعْضُهُمْ  <اقتباس>إِذَا سَمَّيْتُ رَجُلًا بِالْبَاْءِ مِنْ  <حرف>ضَرَبَ</حرف> قُلْتُ  <حرف>رَبٌ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="٤٠">فَأَرَاْدَ الْعَيْنَ</مقطع>
    <مقطع رقم="٤١">فَإِنْ جَعَلْتَ هَذِهِ الْمُتَحَرِّكَةَ ٱسْمًا حَذَفْتَ <هارون مجلد="3" صفحة="321"/>الْهَاْءَ</مقطع>
    <مقطع رقم="٤٢">كَمَا حَذَفْتَهَا مِنْ  <حرف>عِهْ</حرف> حِيْنَ جَعَلْتَهَا ٱسْمًا</مقطع>
    <مقطع رقم="٤٣">فَإِذَا صَاْرَتْ ٱسْمًا صَاْرَتْ مِنْ بَنَاْتِ الثَّّلاْثَةِ</مقطع>
    <مقطع رقم="٤٤">لِأَنَّهُ لَيْسَ فِي الدُّّنْيَا ٱسْمٌ أَقُلُّ عَدَدًا مِنِ ٱسْمٍ عَلَى ثَلَاْثَةِ أَحْرُفٍ</مقطع>
    <مقطع رقم="٤٥">وَلَكِنَّهُمْ قَدْ يَحْذِفُوْنَ مِمَّا كَاْنَ عَلَى ثَلَاْثَةِ حَرْفًا</مقطع>
    <مقطع رقم="٤٦">وَهُوَ فِي الْأَصْلِ لَهُ</مقطع>
    <مقطع رقم="٤٧">وَيَرُدُّونَهُ فِي التَّّحْقِيْرِ وَالْجَمْعِ</مقطع>
    <مقطع رقم="٤٨">وَذٰلِكَ قَوْلُهُمُ فِي  <حرف>دَمٍ</حرف> 
        <حرف>دَمِيٌّ</حرف> 
   </مقطع>
    <مقطع رقم="٤٩">وَفِي  <حرف>حِرٍ</حرف> 
        <حرف>حُرَيْحٌ</حرف> 
   </مقطع>
    <مقطع رقم="٥٠">وَفِي  <حرف>شَفَةٍ</حرف> 
        <حرف>شُفِيْهَةٌ</حرف> 
   </مقطع>
    <مقطع رقم="٥١">وَفِي  <حرف>عِدَةٍ</حرف> 
        <حرف>وُعَيْدَةٌ</حرف> 
   </مقطع>
    <مقطع رقم="٥٢">فَهَذِهِ الْحُرُوْفُ إِذَا صُيِّرَتِ ٱسْمًا</مقطع>
    <مقطع رقم="٥٣">صَاْرَتْ عِنْدَهُمْ مِنْ بَنَاْتِ الثَّّلاْثَةِ الْمَحْذُوفَةِ</مقطع>
    <مقطع رقم="٥٤">وَصَاْرَتْ مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ</مقطع>
    <مقطع رقم="٥٥">لِأَنَّا رَأَيْنَا أَكْثَرَ بَنَاْتِ الْحَرْفِيْنِ</مقطع>
    <مقطع رقم="٥٦">الَّتِي أَصْلُهَا الثَّّلاْثَةُ أَوْ عَاْمَّتَهَا</مقطع>
    <مقطع رقم="٥٧">مِنْ بَنَاْتِ الْيَاْءِ وَالْوَاْوِ</مقطع>
    <مقطع رقم="٥٨">وَإِنَّمَا يَجْعَلُوْنَهَا كَالْأَكْثَرِ</مقطع>
    <مقطع رقم="٥٩">فَكَأَنَّهُمْ إِنْ كَاْنَ الْحَرْفُ مَكْسُوْرًا ضَمُّوا إِلَيْهِ بَاْءً</مقطع>
    <مقطع رقم="٦٠">لِأَنَّهُ عِنْدَهُمْ لَهُ فِي الْأَصْلِ حَرْفَاْنِ</مقطع>
    <مقطع رقم="٦١">كَمَا كَاْنَ لِـ<حرف>دَمٍ</حرف> فِي الْأَصْلِ حَرْفٌ</مقطع>
    <مقطع رقم="٦٢">فَإِذَا ضَمَمْتَ إِلَيْهِ يَاْءً</مقطع>
    <مقطع رقم="٦٣">صَاْرَ بِمَنْزِلَةِ  <حرف>فِي</حرف> 
   </مقطع>
    <مقطع رقم="٦٤">فَتَضُمُّ إِلَيْهِ يَاْءً أُخْرَى</مقطع>
    <مقطع رقم="٦٥">تُثَقِّلُهُ بِهَا</مقطع>
    <مقطع رقم="٦٦">حَتَّى يَصِيْرَ عَلَى مِثَاْلِ الْأَسْمَاْءِ</مقطع>
    <مقطع رقم="٦٧">وَكَذٰلِكَ فَعَلَتِ بِـ<حرف>فِيٍّ</حرف> 
   </مقطع>
    <مقطع رقم="٦٨">وَإِنْ كَاْنَ الْحَرْفُ مَضْمُوْمًا أَلْحَقُوْا وَاْوًا</مقطع>
    <مقطع رقم="٦٩">ثُمَّ ضَمُّوا إِلَيْهَا وَاْوًا أُخْرَى</مقطع>
    <مقطع رقم="٧٠">حَتَّى يَصِيْرَ عَلَى مِثَاْلِ الْأَسْمَاْءِ</مقطع>
    <مقطع رقم="٧١">كَمَا فَعَلُوْا ذٰلِكَ بِـ<حرف>لَوْ</حرف> وَ<حرف>هُوَ</حرف> وَ<حرف>أَوْ</حرف> 
   </مقطع>
    <مقطع رقم="٧٢">فَكَأَنَّهُمْ إِذَا كَاْنَ الْحَرْفُ مَضْمُوْمًا</مقطع>
    <مقطع رقم="٧٣">صَاْرَ عِنْدَهُمْ مِنْ مُضَاْعَفِ الْوَاْوِ</مقطع>
    <مقطع رقم="٧٤">كَمَا صَاْرَتْ  <حرف>لَوْ</حرف> وَ<حرف>أَوْ</حرف> وَ<حرف>هُوَ</حرف> 
   </مقطع>
    <مقطع رقم="٧٥">إِذْ كَاْنَتْ فِيْهِنَّ الُواْوَاْتُ مِنْ مُضَاْعَفِ الْوَاْوِ</مقطع>
    <مقطع رقم="٧٦">وَإِنْ كَاْنَ مَكْسُوْرًا</مقطع>
    <مقطع رقم="٧٧">فَهُوَ عِنْدُهُمْ مِنْ مُضَاْعَفِ الْيَاْءِ</مقطع>
    <مقطع رقم="٧٨">كَمَا كَاْنَ مَا فِيْهِ الْيَاْءُ نَحْوَ<حرف>فِي</حرف> وَ<حرف>كَيْ</حرف> مِنْ مُضَاْعَفٌ الْيَاْءِ عِنْدَهُمْ</مقطع>
    <هارون مجلد="3" صفحة="322"/>
    <مقطع رقم="٧٩">وَإِنْ كَاْنَ الْحَرْفُ مَفْتُوْحًا ضَمُّوا إِلَيْهِ أَلِفًا</مقطع>
    <مقطع رقم="٨٠">ثُمَّ أَلْحَقُوْا أَلِفًا أُخْرَى حَتَّى يَكُوْنَ عَلَى مِثَاْلِ الْأَسْمَاْءِ</مقطع>
    <مقطع رقم="٨١">فَكَأَنَّهُمْ أَرَاْدُوْا أَنْ يُضَاْعِفُوَا الْأَلِفَاْتِ</مقطع>
    <مقطع رقم="٨٢">فِيْمَا كَاْنَ مَفْتُوْحًا</مقطع>
    <مقطع رقم="٨٣">كَمَا ضَاْعَفُوا الَواْوَاْتِ وَاْلِيَاْءَاْتِ</مقطع>
    <مقطع رقم="٨٤">فِيْمَا كَاْنَ مَكْسُوْرًا أَوْ مَضْمُوْمًا</مقطع>
    <مقطع رقم="٨٥">كَمَا صَاْرَتْ  <حرف>مَا</حرف> وَ<حرف>لَا</حرف> وَنَحْوُهُمَا</مقطع>
    <مقطع رقم="٨٦">إِذَا كَاْنَتْ فِيْهِمَا أَلِفَاْتٌ مِمَّا يُضَاْعَفْ</مقطع>
    <مقطع رقم="٨٧">فَإِنْ جَعَلْتَ  <حرف>إِيْ</حرف> ٱسْمًا ثَقَّلْتَهُ بِيَاْءٍ أُخْرَى</مقطع>
    <مقطع رقم="٨٨">وَاكْتَفِيْتَ بِهَا حَتَّى يَصِيْرَ بِمَنْزِلَةِ  <حرف>ٱسْمٍ</حرف> وَ<حرف>ابْنٍ</حرف> 
   </مقطع>
    <مقطع رقم="٨٩">فَأَمَّا  <حرف>قَافْ</حرف> وَ<حرف>يَاْء</حرف> وَ<حرف>زَايْ</حرف> وَ<حرف>بَاْء</حرف> وَ<حرف>وَاوْ</حرف> 
   </مقطع>
    <مقطع رقم="٩٠">فَإِنَّمَا حَكَيْتَ بِهَا الْحُرُوْفَ</مقطع>
    <مقطع رقم="٩١">وَلَمْ تُرِدْ أَنْ تَلْفَظُ بِالْحُرُوْفِ</مقطع>
    <مقطع رقم="٩٢">كَمَا حَكَيْتَ بِـ<حرف>غَاْقٍ</حرف> صَوْتَ الْغُرَاْبِ</مقطع>
    <مقطع رقم="٩٣">وَبِـ<حرف>قَبْ</حرف> وَقْعَ السَّّيْفِ</مقطع>
    <مقطع رقم="٩٤">وَبِـ<حرف>طِيْخْ</حرف> الضَّّحْكَ</مقطع>
    <مقطع رقم="٩٥">وَبَنَيْتَ كُلَّ وَاْحِدٍ بِنَاْءً الْأَسْمَاْءِ</مقطع>
    <مقطع رقم="٩٦">وَ<حرف>قَبَ</حرف> هُوَ وَقْعُ الْسَّيْفِ</مقطع>
    <مقطع رقم="٩٧">وَقَدْ ثَقَّلَ بَعْضُهُمْ وَضَمَّ</مقطع>
    <مقطع رقم="٩٨">وَلَمْ يُسَلِّمْ الصَّّوْتَ كَمَا سَمِعَهُ</مقطع>
    <مقطع رقم="٩٩">فَكَذٰلِكَ حِيْنَ حَكَيْتَ الْحُرُوْفَ</مقطع>
    <مقطع رقم="١٠٠">حَكَيْتَهُا بِبِنَاْءٍ بَنَيْتَهُ لِلْأَسْمَاْءِ</مقطع>
    <مقطع رقم="١٠١">وَلَمْ تُسَلِّمْ الْحُرُوْفَ كَمَا لَمْ تُسَلِّمْ الصَّّوْتِ</مقطع>
    <مقطع رقم="١٠٢">فَهٰذَا سَبِيِلِ هٰذَا الْبَاْبِ</مقطع>
    <مقطع رقم="١٠٣">وَلَوْ سَمَّيْتَ رَجُلًا بِـ<حرف>أَبْ</حرف> قُلْتَ  <قول>هٰذَا إِبٌ</قول> 
   </مقطع>
    <مقطع رقم="١٠٤">وَتَقْدِيْرُهُ فِي الْوَصْلِ  <قول>هٰذَا إِبٌ كَمَا تَرَى</قول> 
   </مقطع>
    <مقطع رقم="١٠٥">تُرِيْدُ الْبَاْءَ وَأَلِفَ الْوَصْلِ مِنْ قَوْلِكَ  <حرف>اضْرِبْ</حرف> 
   </مقطع>
    <مقطع رقم="١٠٦">وَكَذٰلِكَ كُلُّ شَيْءٍ <هارون مجلد="3" صفحة="323"/>مِثْلُهُ</مقطع>
    <مقطع رقم="١٠٧">لَا تُغَيِّرُهُ عَنْ حَاْلِهِ</مقطع>
    <مقطع رقم="١٠٨">لِأَنَّكَ تَقُوْلُ  <حرف>إِبْ</حرف> 
   </مقطع>
    <مقطع رقم="١٠٩">فِيَبْقَى حَرْفَاْنِ سِوَى التَّّنْوِيْنِ</مقطع>
    <مقطع رقم="١١٠">فَإِذَا كَاْنَ الِٱسْمُ هٰهُنَا فِي الِابْتِدَاْءِ هَكَذَا</مقطع>
    <مقطع رقم="١١١">لَمْ يَخْتَلُّ عِنْدَهُمْ أَنْ تَذْهَبَ أَلِفُهُ فِي الْوَصْلِ</مقطع>
    <مقطع رقم="١١٢">وَذٰلِكَ أَنَّ الْحَرْفَ الَّذِي يَلِيْهِ يَقُوْمُ مَقَاْمَ الْأَلِفِ</مقطع>
    <مقطع رقم="١١٣">أَلَا تَرَاْهُمْ يَقُوْلُوْنَ  <قول>مِنِ ٱبٌ لَكَ</قول> 
   </مقطع>
    <مقطع رقم="١١٤">فَلَا يَبْقَى إِلَّا حَرْفٌ وَاْحِدٌ</مقطع>
    <مقطع رقم="١١٥">فَلَا يَخْتَلُّ ذَا عِنْدَهُمْ</مقطع>
    <مقطع رقم="١١٦">إِذْ كَاْنَ كَيْنُوْنَةُ حَرْفٌ لَا يَلْزَمُهُ فِي الِابْتِدَاْءِ</مقطع>
    <مقطع رقم="١١٧">وَفِيْ غَيْرِ هٰذَا الْمَوْضِعِ</مقطع>
    <مقطع رقم="١١٨">إِذَا تَحَرَّكَ مَا قَبْلَ الْهُمَزَةِ فِي قَوْلِكَ  <قول>ذَهَبَ ٱبٌ لَكَ</قول> 
   </مقطع>
    <مقطع رقم="١١٩">وَكَذٰلِكَ  <حرف>إِبْ</حرف> 
   </مقطع>
    <مقطع رقم="١٢٠">لَا يَخْتَلُّ أَنْ يَكُوْنَ فِي الْوَصْلِ عَلَى حَرْفٍ</مقطع>
    <مقطع رقم="١٢١">إِذَا كَاْنَ لَا يَلْزَمُهُ ذٰلِكَ فِي كُلِّ الْمَوَاْضِعِ</مقطع>
    <مقطع رقم="١٢٢">وَلَوْلَا ذٰلِكَ لَمْ يَجُزْ</مقطع>
    <مقطع رقم="١٢٣">لِأَنَّهُ لَيْسَ فِي الدُّّنْيَا ٱسْمٌ يَكُوْنَ عَلَى حَرْفِيْنِ أَحَدُهُمَا التَّّنْوِيْنِ</مقطع>
    <مقطع رقم="١٢٤">لِأَنَّهُ لَا يُسْتَطَاْعُ أَنْ يُتَكَلَّمُ بِهِ فِي الْوَقْفِ مُبْتَدَأً</مقطع>
    <مقطع رقم="١٢٥">فَإِنْ قُلْتَ  <قول>يُغَيَّرُ فِي الْوَقْفِ</قول> 
   </مقطع>
    <مقطع رقم="١٢٦">فَلَيْسَ فِي كَلَاْمِهِمْ أَنْ يُغَيِّرُوْا بِنَاْءَهُ فِي الْوَقْفِ</مقطع>
    <مقطع رقم="١٢٧">عَمَّا كَاْنَ عَلَيْهِ فِي الْوَصْلِ</مقطع>
    <مقطع رقم="١٢٨">وَمِنْ ثُمَّ تَرَكُوْا أَنْ يَقُوْلُوْا  <قول>هٰذَا فِي</قول> 
   </مقطع>
    <مقطع رقم="١٢٩">كَرَاْهِيَةَ أَنْ يَكُوْنَ الِٱسْمُ عَلَى حَرْفِيْنِ أَحَدُهُمَا التَّّنْوِيْنِ</مقطع>
    <مقطع رقم="١٣٠">فِيُوَاْفِقُ مَا كَاْنَ عَلَى حَرْفٍ</مقطع>
    <مقطع رقم="١٣١">وَزَعَمَ الْخَلِيْلِ أَنَّ الْأَلِفَ وَاْللَّاْمَ</مقطع>
    <مقطع رقم="١٣٢">اللَّتَيْنِ يُعَرِّفُوْنَ بِهِمَا</مقطع>
    <مقطع رقم="١٣٣">حَرْفٌ وَاْحِدٌ كَـ<حرف>قَدْ</حرف> وَ<حرف>أَنْ</حرف> 
   </مقطع>
    <مقطع رقم="١٣٤">لَيْسَتْ وَاْحِدَةٌ مِنْهُمَا مُنْفَصِلَةٌ مِنْ الْأُخْرَى</مقطع>
    <مقطع رقم="١٣٥">كَاْنَْفِصَاْلَ أَلِفِ الِاسْتِفْهَاْمِ فِي قَوْلِهِ  <قول>أَ أُرِيْدُ</قول> 
   </مقطع>
    <مقطع رقم="١٣٦">وَلَكِنَّ الْأَلِفَ كَأَلِفِ  <حرف>أَيْمٍ</حرف> فِي  <قول>أَيْمُ اللّٰهِ</قول> 
   </مقطع>
    <مقطع رقم="١٣٧">وَهِيَ مَوْصُوْلَةٌ كَمَا أَنَّ أَلِفَ  <حرف>أَيْمٍ</حرف> مَوْصُوْلَةٌ</مقطع>
    <مقطع رقم="١٣٨">حَدَّثَنَا بِذٰلِكَ يُوْنُسُ عَنْ أَبِيْ عَمْرِوٍ وَهُوَ رَأْيُهُ</مقطع>
    <مقطع رقم="١٣٩">وَاْلدَّلِيْلُ عَلَى أَنَّ أَلِفَ  <حرف>أَيْمٍ</حرف> أَلِفُ وَصْلٍ</مقطع>
    <مقطع رقم="١٤٠">قَوْلُهُمْ  <قول>أَيْمُ اللّٰهِ</قول> 
   </مقطع>
    <مقطع رقم="١٤١">ثُمَّ يَقُوْلُوْنَ <هارون مجلد="3" صفحة="324"/>
        <قول>لَيْمُ اللّٰهِ</قول> 
   </مقطع>
    <مقطع رقم="١٤٢">وَفَتَحُوا أَلِفَ  <حرف>أَيْمٍ</حرف> فِي الِابْتِدَاْءِ</مقطع>
    <مقطع رقم="١٤٣">شَبَّهُوهَا بِأَلِفِ  <حرف>أَحْمَرُ</حرف> لِأَنَّهَا زَاْئِدَةٌ مِثْلُهَا</مقطع>
    <مقطع رقم="١٤٤">وَقَاْلُوْا فِي الِاسْتِفْهَاْمِ  <حرف>آلرَّجُلُ</حرف> 
   </مقطع>
    <مقطع رقم="١٤٥">شَبَّهُوهَا أَيْضًا بِأَلِفِ  <حرف>أَحْمَرُ</حرف> 
   </مقطع>
    <مقطع رقم="١٤٦">كَرَاْهِيَةَ أَنْ يَكُوْنَ كَالْخَبَرِ فِيَلْتَبِسُ</مقطع>
    <مقطع رقم="١٤٧">فَهٰذَا قَوْلُ الْخَلِيْلِ وَ<قول>أَيْمُ اللّٰهِ</قول> كَذٰلِكَ</مقطع>
    <مقطع رقم="١٤٨">فَقَدْ يُشَبَّهُ الشَّّيْءُ بِالشَّيْءِ فِيْ مَوْضِعٍ</مقطع>
    <مقطع رقم="١٤٩">وَيُخَاْلِفُهُ فِي أَكْثَرِ ذٰلِكَ</مقطع>
    <مقطع رقم="١٥٠">نَحْوَ<قول>يَا ابْنَ عَمَّ</قول> فِي النِّّدَاْءِ</مقطع>
    <مقطع رقم="١٥١">وَقَاْلَ الْخَلِيْلِ  <اقتباس>وَمِمَّا يَدُلُّ عَلَى أَنَّ  <حرف>أَلْ</حرف> مَفْصُولَةً مِنْ  <حرف>الرَّجُل</حرف> وَلَمْ يُبْنَ عَلَيْهَا</اقتباس> 
   </مقطع>
    <مقطع رقم="١٥٢">
        <اقتباس>وَأَنَّ الْأَلِفَ وَاْللَّاْمَ فِيْهَا بِمَنْزِلَةِ  <حرف>قَدْ</حرف> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="١٥٣">
        <اقتباس>قَوْلٍ الَشَّاْعِرِ</اقتباس> 
   </مقطع>
    <شاهدة رقم="٢" xml:id="٣١٦-2">
       <بيت>
          <مصراع>دَعْ ذَا وَعَجِّلْ ذَا وَأَلْحَقْنا بَذَلْ</مصراع>
          <مصراع>بِالشَّحْمِ إِنَّا قَدْ مَلِلْنَاْهُ بَجَلْ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="١٥٤">قَاْلَ  <اقتباس>هِيَ هٰهُنَا كَقَوْلِ الرَّجُلِ وَهُوَ يَتَذَكَّرُ  <حرف>قَدِي</حرف> 
        فِيَقُوْلُ  <قول>قَدْ فَعَلَ</قول> 
      </اقتباس> 
   </مقطع>
    <مقطع رقم="١٥٦">وَلَا يَفْعَلُ مِثْلَ هٰذَا عَلَّمْنَاْهُ بِشَيْءٍ مِمَّا كَاْنَ مِنْ الْحُرُوْفِ الْمَوْصُوْلَةِ</مقطع>
    <مقطع رقم="١٥٧">وَيَقُوْلُ الرَّجُلُ  <حرف>أَلِي</حرف> ثُمَّ يَتَذَكَّرُ</مقطع>
    <مقطع رقم="١٥٨">فَقَدْ سَمِعْنَاْهُمْ يَقُوْلُوْنَ ذٰلِكَ</مقطع>
    <مقطع رقم="١٥٩">وَلَوْلَا أَنَّ الْأَلِفَ وَاْللَّاْمَ بِمَنْزِلَةِ  <حرف>قَدْ</حرف> وَ<حرف>سَوْفَ</حرف> 
   </مقطع>
    <مقطع رقم="١٦٠">لَكَاْنَتا بِنَاْءً بُنِيَ عَلَيْهِ الِٱسْمُ لَا يُفَاْرِقُهُ</مقطع>
    <مقطع رقم="١٦١">وَلَكِنَّهُمَا جَمِيْعًا بِمَنْزِلَةِ  <حرف>هَلْ</حرف> وَ<حرف>قَدْ</حرف> وَ<حرف>سَوْفَ</حرف> 
   </مقطع>
    <مقطع رقم="١٦٢">تَدْخُلَاْنِ لِلتَّعْرِيْفِ وَتَخْرُجَاْنِ</مقطع>
    <مقطع رقم="١٦٣">وَإِنْ سَمَّيْتَ رَجُلًا بِالضَّاْدِ مِنْ  <حرف>ضَرَبَ</حرف> قُلْتَ  <حرف>ضَاْءٌ</حرف> 
   </مقطع>
    <مقطع رقم="١٦٤">وَإِنْ سَمَّيْتَهُ بِهَا مِنْ <هارون مجلد="3" صفحة="325"/>
        <حرف>ضِرَاْبٌ</حرف> قُلْتَ  <حرف>ضِيٌّ</حرف> 
   </مقطع>
    <مقطع رقم="١٦٥">وَإِنْ سَمَّيْتَهُ بِهَا مِنْ  <حرف>ضُحًى</حرف> قُلْتَ  <حرف>ضُوٌّ</حرف> 
   </مقطع>
    <مقطع رقم="١٦٦">وَكَذٰلِكَ هٰذَا الْبَاْبُ كُلُّهُ</مقطع>
    <مقطع رقم="١٦٧">وَهٰذَا قِيَاْسُ قَوْلِ الْخَلِيْلِ</مقطع>
    <مقطع رقم="١٦٨">وَمَنْ خَاْلَفَهُ رَدَّ الْحَرْفَ الَّذِي يَلِيْهِ</مقطع>
</باب>
