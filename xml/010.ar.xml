     رقم="١٠">

    <عنوان>
       <مقطع رقم="١">هٰذَا بَابُ الْفَاعِلِ</مقطع>
       <مقطع رقم="٢">الِّذِي يَتَعَدَّاهُ فِعْلُهُ إِلَى مَفْعُولٍ</مقطع>
   </عنوان>
    <مقطع رقم="٣">وذلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٤">
       <قول>ضَرَبَ عَبْدُ اللّٰهِ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٥">فَـ<حرف>عَبْدُ اللّٰهِ</حرف>  ارْتَفَعَ هٰهُنَا</مقطع>
    <مقطع رقم="٦">كَمَا ارْتَفَعَ في  <حرف>ذَهَبَ</حرف>
   </مقطع>
    <مقطع رقم="٧">وَشَغَلْتَ  <حرف>ضَرَبَ</حرف> بِهِ</مقطع>
    <مقطع رقم="٨">كَمَا شَغَلْتَ بِهِ  <حرف>ذَهَبَ</حرف>
   </مقطع>
    <مقطع رقم="٩">وَانْتَصَبَ  <حرف>زَيْدٌ</حرف>
   </مقطع>
    <مقطع رقم="١٠">لِأَنَّهُ مَفْعُولٌ بِهِ</مقطع>
    <مقطع رقم="١١">تَعَدَّى إِلَيْهِ فِعْلُ الْفَاعِلِ</مقطع>
    <مقطع رقم="١٢">فَإِنْ قَدَّمْتَ الْمَفْعُولَ</مقطع>
    <مقطع رقم="١٣">وأَخَّرْتَ الْفَاعِلَ</مقطع>
    <مقطع رقم="١٤">جَرَى اللَّفْظُ كَمَا جَرَى في الأَوَّلِ</مقطع>
    <مقطع رقم="١٥">وذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="١٦">
       <قول>ضَرَبَ زَيْدًا عَبْدُ اللهِ</قول>
   </مقطع>
    <مقطع رقم="١٧">لِأَنَّكَ إِنَّمَا</مقطع>
    <مقطع رقم="١٨">أَرَدْتَ بِهِ مُؤَخَّرًا</مقطع>
    <مقطع رقم="١٩">ما أَرَدْتَ بِهِ مُقَدَّمًا</مقطع>
    <مقطع رقم="٢٠">وَلَمْ تُرِدْ أَنْ تَشْغَلَ الْفِعْلَ بِأَوَّلَ مِنْهُ</مقطع>
    <مقطع رقم="٢١">وَإِنْ كَانَ مُؤَخَّرًا في اللَّفْظِ</مقطع>
    <مقطع رقم="٢٢">فَمِنْ ثُمَّ</مقطع>
    <مقطع رقم="٢٣">كَانَ حَدُّ اللَّفْظِ أَنْ يَكونَ فِيهِ مُقَدَّمًا</مقطع>
    <مقطع رقم="٢٤">وَهُوَ عَرَبِيٌّ جَيَّدٌ كَثِيرٌ</مقطع>
    <مقطع رقم="٢٥">كَأَنَّهُمْ إِنَّمَا</مقطع>
    <مقطع رقم="٢٦">يُقَدِّمُونَ الَّذِي بَيَانُهُ أَهَمُّ لَهُمْ</مقطع>
    <مقطع رقم="٢٧">وَهُمْ بِبَيَانِهِ أَعْنَى</مقطع>
    <مقطع رقم="٢٨">وَإِنْ كَانَا جَمِيعًا يُهِمَّانِهِمْ وَيَعْنِيَانِهِمْ</مقطع>
    <مقطع رقم="٢٩">وَاعْلَمْ أَنَّ الْفِعْلَ</مقطع>
    <مقطع رقم="٣٠">الَّذِي لا يَتَعَدَّى الْفَاعِلَ</مقطع>
    <مقطع رقم="٣١">يَتَعَدَّى إِلَى اسْمِ الْحَدَثَانِ الَّذِي أُخِذَ مِنْهُ</مقطع>
    <مقطع رقم="٣٢">لِأَنَّهُ إِنَّمَا يُذْكَرُ لَيَدُلَّ على الْحَدَثِ</مقطع>
    <مقطع رقم="٣٣">أَلَا تَرَى أَنَّ قَوْلَكَ</مقطع>
    <مقطع رقم="٣٤">
       <قول>قَدْ ذَهَبَ</قول>
   </مقطع>
    <مقطع رقم="٣٥">بِمَنْزِلَةِ قَوْلِكَ</مقطع>
    <مقطع رقم="٣٦">
       <قول>قَدْ كَانَ مِنْهُ ذَهَابٌ</قول>
   </مقطع>
    <مقطع رقم="٣٧">وَإِذَا قُلْتَ <قول>ضَرَبَ عَبْدُ اللهِ</قول>
   </مقطع>
    <مقطع رقم="٣٨">لَمْ يَسْتَبِنْ</مقطع>
    <مقطع رقم="٣٩">أَنَّ الْمَفْعُولَ زَيْدٌ أَوْ عَمْرٌو</مقطع>
    <مقطع رقم="٤٠">وَلا يُدَلُّ عَلَى صِنْفٍ</مقطع>
    <مقطع رقم="٤١">كَمَا أَنَّ  <حرف>ذَهَبَ</حرف>
   </مقطع>
    <مقطع رقم="٤٢">قَدْ دَلَّ على صِنْفٍ</مقطع>
    <مقطع رقم="٤٣">وَهُوَ<هارون مجلد="١" صفحة="٣٤"/>
        <حرف>الذَّهَابُ</حرف>
   </مقطع>
    <مقطع رقم="٤٤">وذلك قولك</مقطع>
    <مقطع رقم="٤٥">
       <قول>ذَهَبَ عَبْدُ اللهِ الذَّهِابَ الشَّدِيدَ</قول>
   </مقطع>
    <مقطع رقم="٤٦">و<قول>قَعَدَ قِعْدَةَ سُوْءٍ</قول>
   </مقطع>
    <مقطع رقم="٤٧">و<قول>قَعَدَ قِعْدَتَيْنِ</قول>
   </مقطع>
    <مقطع رقم="٤٨">لَمَّا عَمِلَ في الحَدَثِ</مقطع>
    <مقطع رقم="٤٩">عَمَلَ في الْمَرَّةِ مِنْهُ وَالْمَرَّتَيْنِ</مقطع>
    <مقطع رقم="٥٠">وَمَا يَكُونُ ضَرْبًا مِنْهُ</مقطع>
    <مقطع رقم="٥١">فَمِنْ ذلِكَ</مقطع>
    <مقطع رقم="٥٢">
       <قول>قَعَدَ القُرْفُصَاءَ</قول>
   </مقطع>
    <مقطع رقم="٥٣">وَ<قول>اشْتَمَلَ الصَّمَّاءَ</قول>
   </مقطع>
    <مقطع رقم="٥٤">وَ<قول>رَجَعَ القَهْقَرَى</قول>
   </مقطع>
    <مقطع رقم="٥٥">لِأَنَّهُ ضَرْبٌ مِنْ فِعْلِهِ</مقطع>
    <مقطع رقم="٥٦">الَّذِي أُخِذَ مِنْهُ</مقطع>
    <مقطع رقم="٥٧">ويَتَعَدَّى إلى الزَّمَانِ</مقطع>
    <مقطع رقم="٥٨">نَحْوَ قَوْلِكَ <قول>ذَهَبَ</قول>
   </مقطع>
    <مقطع رقم="٥٩">لِأَنَّهُ بُنِيَ لِمَا مَضَى مِنْهُ</مقطع>
    <مقطع رقم="٦٠">وَمَا لَمْ يَمْضِ</مقطع>
    <مقطع رقم="٦١">فَإِذَا قَالَ <قول>ذَهَبَ</قول>
   </مقطع>
    <مقطع رقم="٦٢">فَهُوَ دَلِيلٌ عَلَى أَنَّ الْحَدَثَ</مقطع>
    <مقطع رقم="٦٣">فِيمَا مَضَى مِنَ الزَّمَانِ</مقطع>
    <مقطع رقم="٦٤">وَإِذَا قَالَ <قول>سَيَذْهَبُ</قول>
   </مقطع>
    <مقطع رقم="٦٥">فَإِنَّهُ دَلِيلٌ عَلَى أَنَّهُ</مقطع>
    <مقطع رقم="٦٦">يَكُونُ فِيمَا يُسْتَقْبَلُ مِنَ الزَّمَانِ</مقطع>
    <مقطع رقم="٦٧">فَفِيهِ بَيَانُ مَا مَضَى</مقطع>
    <مقطع رقم="٦٨">وَمَا لَمْ يَمْضِ مِنْهُ</مقطع>
    <مقطع رقم="٦٩">كَمَا أَنَّ فِيهِ اسْتِدْلَالًا عَلَى وُقُوعِ الْحَدَثِ</مقطع>
    <مقطع رقم="٧٠">وَذٰلِكَ قَوْلُكَ <قول>قَعَدَ شَهْرَيْنِ</قول>
   </مقطع>
    <مقطع رقم="٧١">و<قول>سَيَقْعَدُ شَهْرَيْنِ</قول>
   </مقطع>
    <مقطع رقم="٧٢">وتقول <قول>ذهبتُ أَمْسِ</قول>
   </مقطع>
    <مقطع رقم="٧٣">و<قول>سأَذهَب غدًا</قول>
   </مقطع>
    <مقطع رقم="٧٤">فَإِنْ شِئْتَ لَمْ تَجْعَلْهُمَا ظَرْفًا</مقطع>
    <مقطع رقم="٧٥">فَهُوَ يَجُوزُ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاءِ الزَّمَانِ</مقطع>
    <مقطع رقم="٧٦">كَمَا جَازَ فِي كُلِّ شَيْءٍ مِنْ أَسْمَاءِ الْحَدَثَ</مقطع>
    <مقطع رقم="٧٧">وَيَتَعَدَّى [هذا الْفِعْلُ] إِلَى مَا اشْتُقَّ مِنْ لَفْظِهِ</مقطع>
    <مقطع رقم="٧٨">اسْمًا لِلْمَكانِ وَإِلَى الْمَكَانِ</مقطع>
    <مقطع رقم="٧٩">لَأَنَّهُ إِذَا قَال <قول>ذَهَبَ</قول> أَوْ <قول>قَعَدَ</قول>
   </مقطع>
    <مقطع رقم="٨٠">فَقَدْ عُلِمَ أَنَّ لِلْحَدَثِ مَكَانًا</مقطع>
    <مقطع رقم="٨١">وَإِنْ لَمْ يَذْكُرُهُ</مقطع>
    <مقطع رقم="٨٢">كَمَا عُلِمَ أَنَّهُ قَدْ كَانَ ذَهَابٌ</مقطع>
    <مقطع رقم="٨٣">وَذٰلِكَ قَوْلُكَ</مقطع>
    <مقطع رقم="٨٤">
       <قول>ذَهَبْتُ الْمَذْهَبَ الْبَعِيدَ</قول>
   </مقطع>
    <مقطع رقم="٨٥">و<قول>جَلَسْتُ مَجْلِسًا حَسَنًا</قول>
   </مقطع>
    <مقطع رقم="٨٦">وَ<قول>قَعَدْتُ مَقْعَدًا كَرِيمًا</قول>
   </مقطع>
    <مقطع رقم="٨٧">وَ<قول>قَعَدْتُ الْمَكَانَ الَّذِي رَأَيْتَ</قول>
   </مقطع>
    <مقطع رقم="٨٨">و<قول>ذَهَبْتُ وَجْهًا مِنَ الْوُجُوهِ</قول>
   </مقطع>
    <مقطع رقم="٨٩">وَقَدْ قَالَ بَعْضُهُمْ <قول>ذَهَبْتُ الشَّامَ</قول>
   </مقطع>
    <مقطع رقم="٩٠">يُشَبِّهُهُ بِالْمُبْهَمِ</مقطع>
    <مقطع رقم="٩١">إِذَا كَانَ مَكَانًا</مقطع>
    <مقطع رقم="٩٢">أَوْ كَاْنَ يَقَعُ عَلَيْهِ الْمَكَانُ وَالْمَذْهَبُ</مقطع>
    <مقطع رقم="٩٣">وَهٰذًا شَاذٌّ لِأَنَّهُ لَيْسَ في  <حرف>ذَهَبَ</حرف>
   </مقطع>
    <مقطع رقم="٩٤">دَلِيلًا عَلَى الشَّامِ</مقطع>
    <مقطع رقم="٩٥">وَفِيهِ دَلِيلٌ عَلَى الْمَذْهَبِ وَالْمَكَانِ</مقطع>
    <مقطع رقم="٩٦">وَمِثْلُ <قول>ذَهَبْتُ الشَّامَ</قول>
   </مقطع>
    <مقطع رقم="٩٧">
       <قول>دَخَلْتُ الْبَيْتَ</قول>
   </مقطع>
    <مقطع رقم="٩٨">وَمِثْلُ ذٰلِكَ قَوْلُ سَاْعِدَةَ بْنِ جُؤَيَّةَ</مقطع>
    <هارون مجلد="١" صفحة="٣٥"/>
    <شاهدة رقم="١" xml:id="١٠-١">
       <بيت>
          <مصراع>لَدْنٌ بِهَزِّ الْكَفِّ يَعْسِلُ مَتْنُهُ</مصراع>
          <مصراع>فِيْهِ كَمَا عَسَلَ الطَّرِيْقَ الثَّعْلَبُ</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٩٩">وَيَتَعَدَّى إِلَى مَا كَاْنَ وَقْتًا فِي الْأَمْكِنَةِ</مقطع>
    <مقطع رقم="١٠٠">كَمَا يَتَعَدَّىَ إِلَى مَا كَاْنَ وَقْتًا فِي الْأَزْمِنَةِ</مقطع>
    <مقطع رقم="١٠١">لِأَنَّهُ وَقْتٌ يَقَعُ فِي الْمَكَاْنِ</مقطع>
    <مقطع رقم="١٠٢">وَلَا يَخْتَصُّ بِهِ مَكَاْنٌ وَاْحِدٌ</مقطع>
    <مقطع رقم="١٠٣">كَمَا أَنَّ ذَاكَ وَقْتٌ فِي الْأَزْمَانِ</مقطع>
    <مقطع رقم="١٠٤">لَا يَخْتَصُّ به زَمَنٌ بِعَيْنِهِ</مقطع>
    <مقطع رقم="١٠٥">فَلَمَّا صارَ بِمَنْزِلَةِ الْوَقْتِ في الزَّمَنِ كان مِثْلَهُ</مقطع>
    <مقطع رقم="١٠٦">لِأنَّكَ قَدْ تَفْعَلُ بِالْأَمَاكِنِ</مقطع>
    <مقطع رقم="١٠٧">ما تَفْعَلُ بِالْأَزْمِنَةِ</مقطع>
    <مقطع رقم="١٠٨">وَإِنْ كَانَ الْأَزْمِنَةِ أَقْوَى في ذَلِكَ</مقطع>
    <مقطع رقم="١٠٩">وَكَذَلِكَ يَنْبَغِي أَنْ يَكُونَ</مقطع>
    <مقطع رقم="١١٠">إذْ صارَ فِيمَا هُوَ أَبْعَدُ</مقطع>
    <مقطع رقم="١١١">نَحْوَ <قول>ذَهَبْتُ الشَّامَ</قول>
   </مقطع>
    <مقطع رقم="١١٢">وهو قَوْلُكَ <قول>ذَهَبْتُ فَرْسَخَيْن</قول>
   </مقطع>
    <مقطع رقم="١١٣">و<قول>سِرْتُ الْمِيلَيْنِ</قول>
   </مقطع>
    <مقطع رقم="١١٤">كما تَقُولُ <قول>ذَهَبْتُ شَهْرَيْن</قول>
   </مقطع>
    <مقطع رقم="١١٥">و<قول>سِرْتُ الْيَوْمَيْنِ</قول>
   </مقطع>
    <مقطع رقم="١١٦">وِإِنَّمَا جُعِلَ في الزَّمَانِ أَقْوَى</مقطع>
    <مقطع رقم="١١٧">لِأَنَّ الْفِعْلَ بُنِيَ لِمَا مَضَى مِنْهُ</مقطع>
    <مقطع رقم="١١٨">وَمَا لَمْ يَمْضِ</مقطع>
    <مقطع رقم="١١٩">فَفِيهِ بَيَانُ [الْفِعْلِ] مَتَى وَقَعَ</مقطع>
    <مقطع رقم="١٢٠">كَمَا أَنَّ فِيهِ بَيَانَ</مقطع>
    <مقطع رقم="١٢١">أَنَّهُ قَدْ وَقَعَ الْمَصْدَرُ</مقطع>
    <مقطع رقم="١٢٢">وَهُوَ الحَدَثُ</مقطع>
    <مقطع رقم="١٢٣">وَالْأَمَاكِنُ لَمْ يُبْنَ لَهَا فِعْلٌ</مقطع>
    <مقطع رقم="١٢٤">وَلَيْسَتْ الْأَمَاكِنُ بِمَصَادِرَ أُخِذَ مِنْهَا الْأَمْثِلَةُ</مقطع>
    <مقطع رقم="١٢٥">وَالْأَمَاكِنُ إِلَى الْأَنَاسِىِّ وَنَحْوِهِمْ أَقْرَبُ</مقطع>
    <مقطع رقم="١٢٦">أَلاَ تَرَى أَنَّهُمْ يَخُصُّونَهَا بِأَسْمَاءٍ كَـ<حرف>زَيْدٍ</حرف>  و<حرف>عَمْرٍو</حرف>
   </مقطع>
    <مقطع رقم="١٢٧">وفي <هارون مجلد="١" صفحة="٣٦"/>قَوْلِهِمْ  <حرف>مَكَّةُ</حرف>  و<حرف>عُمَانُ</حرف> وَنَحْوُهُمَا</مقطع>
    <مقطع رقم="١٢٨">وَتَكُونُ مِنْهَا خِلَقٌ</مقطع>
    <مقطع رقم="١٢٩">لَا يَكُونُ لِكُلِّ مَكَانٍ وَلَا فِيهِ</مقطع>
    <مقطع رقم="١٣٠">كَـ<حرف>الْجَبَل</حرف>  وَ<حرف>الْوِادِي</حرف>  وَ<حرف>الْبَحْر</حرف>
   </مقطع>
    <مقطع رقم="١٣١">وَالدَّهْرُ لَيْسَ كَذَلِكَ</مقطع>
    <مقطع رقم="١٣٢">وَالْأَمَاكِنُ لَهَا جُثَّةٌ</مقطع>
    <مقطع رقم="١٣٣">وَإِنَّمَا الدَّهْرُ مُضِىُّ اللَّيْلِ وَالنَّهَارِ</مقطع>
    <مقطع رقم="١٣٤">فَهُوَ إِلَى الْفِعْلِ أَقْرَبُ</مقطع>
</باب>

