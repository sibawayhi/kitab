<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     هارون="١-٤١٩"
     يعقوب="١-٤٨٦"
     البكاء="٢-٣٥"
     رقم="١٠٠">
  <عنوان>
    <مقطع رقم="١">هٰذَا بَاْبُ الْجَرِّ </مقطع>
  </عنوان>
  <مقطع رقم="٢">وَالْجَرُّ إِنَّمَا يَكُوْنُ في كُلِّ اسْمٍ مُضَاْفٍ إِلَيْهِ</مقطع>
  <مقطع رقم="٣">وَاعْلَمْ أَنَّ الْمُضَاْفَ إِلَيْهِ يَنْجَرُّ بِثَلَاْثَةِ أَشْيَاْءٍ</مقطع>
  <مقطع رقم="٤">بِشَيْءٍ لَيْسَ بِاسْمٍ وَلَا ظَرْفٍ</مقطع>
  <مقطع رقم="٥">وَبِشَيْءٍ يَكُوْنُ ظَرْفًا</مقطع>
  <مقطع رقم="٦">وَبِاسْمٍ لَا يَكُوْنُ ظَرْفًا</مقطع>
  <مقطع رقم="٧">فَأَمَّا الَّذِي لَيْسَ بِاسْمٍ وَلَا ظَرْفٍ</مقطع>
  <مقطع رقم="٨">فَقَوْلُكَ <قول>مَرَرْتُ بِعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٩">وَ<قول>هٰذَا لِعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="١٠"> وَ<قول>مَا أَنْتَ كَزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="١١">وَ<قول>يَا لَبَكْرٍ</قول>
  </مقطع>
  <مقطع رقم="١٢">وَ<قول>تَاللّٰهِ لَا أَفْعَلُ ذَاْ	كَ</قول>
  </مقطع>
  <مقطع رقم="١٣">وَ<حرف>مِنْ</حرف> وَ<حرف>فِي</حرف>
  <هارون مجلد="1" صفحة="419"/>
  وَ<حرف>مُذْ</حرف> وَ<حرف>عَنْ</حرف> وَ<حرف>رُبَّ</حرف> وَمَا أَشْبَهَ ذٰلِكَ</مقطع>

  <مقطع رقم="١٤">وَكَذٰلِكَ  <قول>أَخَذْتُهُ عَنْ زَيْدٍ</قول> وَ<حرف>إِلَى زَيْدٍ</حرف>
  </مقطع>
  <مقطع رقم="١٥">وَأَمَّا الْحُرُوْفُ الَّتِي تَكُوْنُ ظَرْفًا</مقطع>
  <مقطع رقم="١٦">فَنَحْوُ <حرف>خَلْفَ</حرف> وَ<حرف>أَمَامَ</حرف>
   وَ<حرف>قُدَّاْمَ</حرف>
    وَ<حرف>وَرَاْءَ</حرف>
     وَ<حرف>فَوْقَ</حرف>
      وَ<حرف>تَحْتَ</حرف>
       وَ<حرف>عِنْدَ</حرف>
        وَ<حرف>قَبْلَ</حرف>
   وَ<حرف>مَعَ</حرف>
  </مقطع>

  <مقطع رقم="١٧">وَ<حرف>عَلَى</حرف> لِأَنَّكَ تَقُوْلُ  <قول>مِنْ عَلَيْكَ</قول> كَمَا تَقُوْلُ  <قول>مِنْ فَوْقِكَ</قول> وَ<قول>ذَهَبَ مِنْ مَعِهُ</قول>
  </مقطع>

  <مقطع رقم="١٨">وَ<حرف>عَنْ</حرف> أَيْضًا ظَرْفٌ بِمَنْزِلَةِ <حرف>ذَاْتَ الْيَمِيْنِ</حرف> وَ<حرف>النَّاحِيَةَ</حرف></مقطع>
  <مقطع رقم="١٩">أَلَا تَرَى أَنَّكَ تَقُوْلُ  <قول>مِنْ عَنْ يَمِيْنِكَ</قول>
  </مقطع>
  <مقطع رقم="٢٠">كَمَا تَقُوْلُ  <قول>مِنْ نَاحِيَةِ كَذَا وَكَذَا</قول>
  </مقطع>
  <مقطع رقم="٢١">وَ<حرف>قُبَالَةَ</حرف>
   وَ<حرف>مَكَانَكَ</حرف>
    وَ<حرف>دُوْنَ</حرف>
     وَ<حرف>قَبْلَ</حرف>
      وَ<حرف>بَعْدَ</حرف>
       وَ<حرف>إِزَاءَ</حرف>
        وَ<حرف>حِذَاءَ</حرف>
         وَمَا أَشْبَهَ هٰذَا مِنْ الْأَمْكِنَةِ وَالْأَزْمِنَةِ</مقطع>

  <مقطع رقم="٢٢">وَذٰلِكَ قَوْلُكَ  <قول>أَنْتَ خَلْفَ عَبْدِ اللّٰهِ وَأَمَاْمَ زَيْدٍ وَقُدَّاْمَ أَخِيْكَ</قول>
  </مقطع>
  <مقطع رقم="٢٣">وَكَذٰلِكَ سَاْئِرُ هَذِهِ الْحُرُوْفِ</مقطع>

  <مقطع رقم="٢٤">وَهَذِهِ الظُّرُوْفُ أَسْمَاْءٌ وَلٰكِنَّهَا صَاْرَتْ مَوَاْضِعَ لِلْأَشْيَاءِ</مقطع>
  <مقطع رقم="٢٥">وَأَمَّا الْأَسْمَاْءُ فَنَحْوُ <حرف>مِثْلٍ</حرف> وَ<حرف>غَيْرٍ</حرف> وَ<حرف>كُلٍّ</حرف> وَ<حرف>بَعْضٍ</حرف>

  </مقطع>
  <مقطع رقم="٢٦">وَمِثْلُ ذٰلِكَ أَيْضًا الْأَسْمَاْءُ الْمُخْتَصَّةُ نَحْوُ  <حرف>حِمَاْرٍ</حرف> وَ<حرف>جِدَاْرٍ</حرف> وَ<حرف>مَاْلٍ</حرف> وَ<حرف>أَفْعَلَ</حرف>
  </مقطع>

  <مقطع رقم="٢٧">نَحْوَ قَوْلِكَ  <قول>هٰذَا أَعْمَلُ النَّاْسِ</قول> وَمَا أَشْبَهَ هٰذَا مِنَ الْأَسَمَاْءِ كُلِّهَا</مقطع>
  <مقطع رقم="٢٨">وَذٰلِكَ قَوْلُكَ  <قول>هٰذَا مِثْلُ عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٢٩">وَ<قول>هٰذَا كُلُّ مَاْلِكَ وَبَعْضُ قَوْمِكَ</قول>
  </مقطع>
  <مقطع رقم="٣٠">وَ<قول>هٰذَا حِمَاْرُ زَيْدٍ وَجِدَاْرُ أَخِيْكَ وَمَاْلُ عَمْرٍو</قول>
  </مقطع>
  <مقطع رقم="٣١">وَ<قول>هٰذَا أَشَدُّ النَّاْسِ</قول>
  </مقطع>
  <مقطع رقم="٣٢">وَأَمَّا الْـ<حرف>بَاْءُ</حرف> وَمَا أَشْبَهَهَا فَلَيْسَتْ بِظُرُوْفٍ وَلَا أَسْمَاْءٍ</مقطع>

  <مقطع رقم="٣٣">وَلٰكِنَّهَا يُضَاْفُ بِهَا <هارون مجلد="1" صفحة="420"/>إِلَى الِاسْمِ مَا قَبْلَهُ أَوْ مَا بَعْدَهُ</مقطع>
  <مقطع رقم="٣٤">فَإِذَا قُلْتَ  <قول>يَا لَبَكْرٍ</قول>
  </مقطع>
  <مقطع رقم="٣٥">فَإِنَّمَا أَرَدْتَ أَنْ تَجْعَلَ مَا يَعْمَلُ في الْمُنَاْدَى مِنَ الْفِعْلِ الْمُضْمَرِ مُضَاْفًا إِلَى بَكْرٍ بِالـ<حرف>لَّامِ</حرف>
  </مقطع>
  <مقطع رقم="٣٦">وَإِذَا قُلْتَ  <قول>مَرَرْتُ بِزَيْدٍ</قول>
  </مقطع>
  <مقطع رقم="٣٧">فَإِنَّمَا أَضَفْتَ الْمُرُوْرَ إِلَى زَيْدٍ بِالْـ<حرف>بَاءِ</حرف>
  </مقطع>
  <مقطع رقم="٣٨">وَكَذٰلِكَ  <قول>هٰذَا لِعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٣٩">وَإِذَا قُلْتَ  <قول>أَنْتَ كَعَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٤٠">فَقَدْ أَضَفْتَ إِلَى عَبْدِ اللّٰهِ الشَبَهَ بِالْـ<حرف>كَافِ</حرف>
  </مقطع>
  <مقطع رقم="٤١">وَإِذَا قُلْتَ  <قول>أَخَذْتُهُ مِنْ عَبْدِ اللّٰهِ</قول>
  </مقطع>
  <مقطع رقم="٤٢">فَقَدْ أَضَفْتَ الْأَخْذَ إِلَى عَبْدِ اللّٰهِ بِـ<حرف>مِنْ</حرف>
  </مقطع>
  <مقطع رقم="٤٣">وَإِذَا قُلْتَ  <قول>مُذْ زَمَاْنٍ</قول>
  </مقطع>
  <مقطع رقم="٤٤">فَقَدْ أَضَفْتَ الْأَمْرَ إِلَى وَقْتٍ مِنَ الزَّمَاْنِ بِـ<حرف>مُذْ</حرف>
  </مقطع>
  <مقطع رقم="٤٥">وَإِذَا قُلْتَ  <قول>أَنْتَ فِي الدَّاْرِ</قول>
  </مقطع>
  <مقطع رقم="٤٦">فَقَدْ أَضْفَتَ كَيْنُوْنَتَكَ فِي الدَّاْرِ إِلَى الدَّاِْرِ بِـ<حرف>فِي</حرف>
  </مقطع>
  <!--
      NB: we might expect kaynunatahu,
      but the kaf suffix of kaynunataka matches "anta" of the example
      rather than the "-ta" of the verb "adafta"
      the trick is to insert the implicit quote marks in the right places
  -->
 <مقطع رقم="٤٧">وَإِذَا قُلْتَ  <قول>فِيْكَ خَصْلَةُ سَوْءٍ</قول>
</مقطع>
<مقطع رقم="٤٨">فَقَدْ أَضَفْتَ إِلَيْهِ الرَّدَاْءَةَ بِـ<حرف>فِي</حرف>
</مقطع>
<مقطع رقم="٤٩">وَإِذَا قُلْتَ  <قول>رُبَّ رَجُلٍ يَقُوْلُ ذَاْكَ</قول>
</مقطع>
<مقطع رقم="٥٠">فَقَدْ أَضْفَتْ الْقَوْلَ إِلَى الرَّجُلِ بِـ<حرف>رُبَّ</حرف>
</مقطع>
<مقطع رقم="٥١">وَإِذَا قُلْتَ  <قول>بِاللّٰهِ</قول> وَ<قول>وَاللّٰهِ</قول> وَ<قول>تَالَلّٰهِ</قول>
</مقطع>
<مقطع رقم="٥٢">فَإِنَّمَا أَضَفْتَ الْحَلْفَ إِلَى اللّٰهِ سُبْحَانَهُ</مقطع>
<مقطع رقم="٥٣">كَمَا أَضَفْتَ النِّدَاْءَ بِالـ<حرف>لَّامِ</حرف> إِلَى بَكْرٍ حِيْنَ قُلْتَ  <قول>يَا لَبَكْرٍ</قول>
</مقطع>
<مقطع رقم="٥٤">وَكَذٰلِكَ  <قول>رَوَيْتُهُ عَنْ زَيْدٍ</قول>
</مقطع>
<مقطع رقم="٥٥">أَضَفْتَ الرِّوَاْيَةَ إِلَى زَيْدٍ بِـ<حرف>عَنْ</حرف>
</مقطع>
</باب>
