<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-١٤"
     درنبورج="١-١٢"
     هارون="١-٣٧"
     يعقوب="١-٧١"
     البكاء="١-٩٣"
     رقم="١١">
   <عنوان>
      <مقطع رقم="١">هٰذَا بَاْبُ الْفَاْعِلِ</مقطع>
      <مقطع رقم="٢">الَّذِي يَتَعَدَاهُ فِعْلُهُ إِلَى مَفْعُوْلَيْنِ</مقطع>
   </عنوان>
   <مقطع رقم="٣">فَإِنْ شِئْتَ اقْتَصَرْتَ عَلَى الْمَفْعُوْلِ الْأَوَّلِ</مقطع>
   <مقطع رقم="٤">إِنْ شِئْتَ تَعَدَّىْ إِلَى الثَّانِيْ</مقطع>
   <مقطع رقم="٥">كَمَا تَعَدَّىْ إِلَى الْأَوَّلِ</مقطع>
   <مقطع رقم="٦">وَذٰلِكَ قَوْلُكَ <قول>أَعْطَى عَبْدُ اللَّهِ زَيْدًا دِرْهَمًا</قول>
   </مقطع>
   <مقطع رقم="٧">وَ <قول>كَسَوْتُ بِشْرًا الثَِيَاْبَ الْجِيَاْدَ</قول>
   </مقطع>
   <مقطع رقم="٨">وَمِنْ ذٰلِكَ <قول>اخْتَرْتُ الرِّجَالَ عَبْدَ اللّٰهِ</قول>
   </مقطع>
   <مقطع رقم="٩">وَمِثْلُ ذٰلِكَ قَوْلُهُ عَزَّ وَجَلَّ</مقطع>
   <مقطع رقم="١٠">
      <آية>وَاْخْتَاْرَ مُوْسَىْ قَوْمَهُ سَبْعِيْنَ رَجُلًا</آية>
   </مقطع>
   <مقطع رقم="١١">وَ <قول>سَمَّيْتَهُ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="١٢">وَ <قول>كَنَّيْتُ زَيْدًا أَبَا عَبْدِ اللّٰهِ</قول>
   </مقطع>
   <مقطع رقم="١٣">وَ <قول>دَعَوْتُهُ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="١٤">إِذَا أَرَدْتَ <حرف>دَعَوْتُهُ</حرف>
   </مقطع>
   <مقطع رقم="١٥">الَّتِيْ تَجْرِي مَجْرَىْ <حرف>سَمَّيْتُهُ</حرف>
   </مقطع>
   <مقطع رقم="١٦">وَإِنْ عَنَيْتَ الدُّعَاْءَ إِلَى أَمْرٍ</مقطع>
   <مقطع رقم="١٧">لَمْ يُجَاوِزْ مَفْعُوْلًا وَاْحِدًا</مقطع>
   <مقطع رقم="١٨">وَمِنْهُ قَوْلُ الشَّاْعِرِ</مقطع>
   <شاهدة رقم="١">
      <بيت>
         <مصراع>أَسْتَغْفِرُ اللَّهَ ذَنْبًا لَسْتُ مُحْصِيَه</مصراع>
         <مصراع>رُبَّ الْعِبَاْدِ إِلَيْهِ الْوَجْهُ وَالْعَمَلُ</مصراع>
      </بيت>
   </شاهدة>
   <مقطع رقم="١٩">وَقَالَ عَمْرُوْ بْنُ مَعَديَكَرِبَ الْزُّبَيْدِىِّ</مقطع>
   <شاهدة رقم="٢">
      <بيت>
         <مصراع>أَمَرْتُكَ الْخَيْرَ فَافْعَلْ مَا أُمِرْتَ بِهِ</مصراع>
         <مصراع>فَقَدْ تَرَكْتُكَ ذَا مَالٍ وَذَا نَشَبِ</مصراع>
      </بيت>
   </شاهدة>
   <هارون مُجَلَّدَ="١" صفحة="٣٧"/>
   <مقطع رقم="٢٠">وَإِنَّمَا فُصِلَ هٰذَا أَنَّهَا</مقطع>
   <مقطع رقم="٢١">أَفْعَالٌ تُوَصَلُ بِحُرُوْفِ الْإِضَافَةِ</مقطع>
   <مقطع رقم="٢٢">فَتَقُوْلُ <قول>اخْتَرْتُ فُلَانًا مِن الرِّجَالِ</قول>
   </مقطع>
   <مقطع رقم="٢٣">وَ <قول>سَمَّيْتُهُ بِفُلَانٍ</قول>
   </مقطع>
   <مقطع رقم="٢٤">كَمَا تَقُوْلُ <قول>عَرَّفْتُهُ بِهٰذِهِ الْعَلَامَةِ</قول>
   </مقطع>
   <مقطع رقم="٢٥">وَ <قول>أَوْضَحْتُهُ بِهَا</قول>
   </مقطع>
   <مقطع رقم="٢٦">وَ <قول>أَسْتَغْفِرُ اللّٰهَ مِنْ ذٰلِكَ</قول>
   </مقطع>
   <مقطع رقم="٢٧">فَلَمَّا حَذَفُوا حَرْفَ الْجَرِّ عَمِلَ الْفِعْلُ</مقطع>
   <مقطع رقم="٢٨">وَمِثْلُ ذٰلِكَ قَوْلُ الْمُتَلَمِّسِ</مقطع>
   <شاهدة رقم="٣">
      <بيت>
         <مصراع>آلَيْتَ حَبَّ الْعِرَاقِ الدَّهْرَ أَطْعَمُهُ</مصراع>
         <مصراع>وَالْحَبُّ يَأْكُلُهُ فِيْ الْقَرِيَةِ السُّوْسُ</مصراع>
      </بيت>
   </شاهدة>
   <مقطع رقم="٢٩">يُرِيْدُ <حرف>عَلى حَبِّ الْعِرَاقِ</حرف>
   </مقطع>
   <مقطع رقم="٣٠">وَكَمَا تَقُوْلُ <قول>نُبِّئْتُ زَيْدًا يَقُوْلُ ذَاكَ</قول>
   </مقطع>
   <مقطع رقم="٣١">أَيْ عَنْ زَيْدٍ</مقطع>
   <مقطع رقم="٣٢">وَلَيْسَتْ <حرف>عَنْ</حرف> وَ <حرف>عَلَى</حرف> هٰهُنَا</مقطع>
   <مقطع رقم="٣٣">بِمَنْزِلَةِ الْـ <حرف>بَاْءِ</حرف> فِيْ قَوْلِهِ</مقطع>
   <مقطع رقم="٣٤">
      <آية>كَفَىْ بِاللّٰهِ شَهِيْدًا</آية>
   </مقطع>
   <مقطع رقم="٣٥">وَ <حرف>لَيْسَ بِزَيْدٍ</حرف>
   </مقطع>
   <مقطع رقم="٣٦">لِأَنَّ <حرف>عَنْ</حرف> وَ <حرف>عَلَى</حرف> لَا يُفْعَلُ بِهَا ذَاكَ وَلَا بِ‍ <حرف>مِنْ</حرف> فِيْ الْوَاْجِبِ</مقطع>
   <مقطع رقم="٣٧">وَلَيْسَتْ</مقطع>
   <مقطع رقم="٣٨">
      <قول>أَسْتَغْفِرُ اللّٰهَ ذَنْبًا</قول>
   </مقطع>
   <مقطع رقم="٣٩">وَ <قول>أَمَرْتُكَ الْخَيْرَ</قول>
   </مقطع>
   <مقطع رقم="٤٠">أَكْثَرَ فِيْ كَلَامِهِمْ جَمِيْعًا</مقطع>
   <مقطع رقم="٤١">وَإِنَّمَا يَتَكَلَّمُ بِهَا بَعْضُهُمْ</مقطع>
   <مقطع رقم="٤٢">فَأَمَّا <قول>سَمَّيْتُ</قول> وَ <قول>كَنَّيْتُ</قول>
   </مقطع>
   <مقطع رقم="٤٣">فَإِنَّمَا دَخَلَتْهَا الْبَاْءُ</مقطع>
   <مقطع رقم="٤٤">عَلَى حَدِّ مَا دَخَلَتْ فِيْ <قول>عَرَّفْتُ</قول>
   </مقطع>
   <مقطع رقم="٤٥">تَقُوْلُ <قول>عَرَّفْتُهُ زَيْدًا</قول>
   </مقطع>
   <مقطع رقم="٤٦">ثُمَّ تَقُوْلُ <قول>عَرَّفْتُهُ بِزَيْدٍ</قول>
   </مقطع>
   <مقطع رقم="٤٧">فَهُوَ سَوَى ذٰلِكَ الْمَعْنَىْ</مقطع>
   <مقطع رقم="٤٨">فَإِنَّمَا تَدْخُلُ فِيْ <قول>سَمَّيْتُ</قول> وَ <قول>كَنَّيْتُ</قول>
   </مقطع>
   <مقطع رقم="٤٩">عَلَى حَدِّ مَا دَخَلَتْ فِيْ <قول>عَرَّفْتُهُ بِزَيْدٍ</قول>
   </مقطع>
   <مقطع رقم="٥٠">فَهٰذِهِ<هارون مُجَلَّدَ="١" صفحة="٣٨"/>الْحُرُوْفُ كَانَ أَصْلُهَا فِيْ الِاسْتِعْمَالِ</مقطع>
   <مقطع رقم="٥١">أَنْ تُوْصَلَ بِحَروفِ الْإِضَافَةِ</مقطع>
   <مقطع رقم="٥٢">وَلَيْسَ كُلُّ الْفِعْلِ يُفْعَلَ بِهِ هٰذَا</مقطع>
   <مقطع رقم="٥٣">كَمَا أَنَّهُ لَيْسَ كُلُّ فِعْلٍ</مقطع>
   <مقطع رقم="٥٤">يَتَعَدَّى الْفَاْعِلَ</مقطع>
   <مقطع رقم="٥٥"> وَلَا يَتَعَدَّى إِلَى مَفْعُوْلَيْنِ</مقطع>
   <مقطع رقم="٥٦">وَمِنْهُ قَوْلُ الْفَرَزْدَقِ</مقطع>
   <شاهدة رقم="٤">
      <بيت>
         <مصراع>مَنّا الَّذِيْ اخْتِيرَ الْرِّجَالَ سَمَاْحَةً</مصراع>
         <مصراع>وَُجُوْدًا إِذَا هَبَّ الْرِّيَاْحُ الزَّعَاْزِعُ</مصراع>
      </بيت>
   </شاهدة>
   <مقطع رقم="٥٧">وَقَالَ الْفَرَزْدَقُ أَيْضًا</مقطع>
   <شاهدة رقم="٥">
      <بيت>
         <مصراع>نُبِّئْتُ عَبْدَ اللّٰهِ بِالْجَوِّ أَصْبَحَتْ</مصراع>
         <مصراع>كِرَامًا مَوَالِيْهَا لَئِيمًا صْمِيمُهَا</مصراع>
      </بيت>
   </شاهدة>
</باب>
