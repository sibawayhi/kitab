<باب xmlns="http://www.sibawayhi.org/schema/2009/07/sibawayhi"
     بلاق="١-٥٢"
     درنبورج="١-٤١"
     هارون="١-١٠١"
     يعقوب="١-١٥٦"
     البكاء="١-١٧٥"
     رقم="٢٩">
    <عنوان>
       <مقطع رقم="١">هٰذَا بَاْبُ مَا يَنْتَصِبُ فِي الْأَلِفُ</مقطع>
   </عنوان>
    <مقطع رقم="٢">تَقُوْلُ <قول>أَعَبْدَ اللّٰهِ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع رقم="٣">وَ<قول>أَزَيْدًا مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="٤">وَ<قول>أَعَمْرًا قَتَلْتَ أَخَاهُ</قول>
   </مقطع>
    <مقطع رقم="٥">وَ<قول>أَعَمْرًا اشْتَرَيْتَ لَهُ ثَوْبًا</قول>
   </مقطع>
    <مقطع رقم="٦">فَفِي كُلِّ هٰذَا قَدْ أَضْمَرْتَ بَيْنَ الْأَلِفِ وَالِٱسْمِ فِعْلًا هٰذَا تَفْسِيْرُهُ</مقطع>
    <مقطع رقم="٧">كَمَا فَعَلْتَ ذٰلِكَ فِيْمَا نَصَبْتَهُ فِي هَذِهِ الْأَحْرُفِ فِي غَيْرِ الِاسْتِفْهَامِ</مقطع>
    <مقطع رقم="٨">قَالَ جَرِيْرٌ</مقطع>
    <هارون مجلد="١" صفحة="١٠١"/>
    <شاهدة رقم="١" xml:id="٢٩-١">
       <بيت>
          <مصراع>أَثَعْلَبَةَ الْفَوَاْرِسَ أَمْ رِيَاْحًا</مصراع>
          <مصراع>عَدَلْتَ بِهِمْ طُهَيَّةَ وَالْخِشَاْبَا</مصراع>
      </بيت>
   </شاهدة>
    <مقطع رقم="٩">فَإِذَا أَوْقَعْتَ عَلَيْهِ الْفِعْلَ أَوْعَلَى شَئٍ مِنَ سَبَبِهِ نَصَبْتَهُ</مقطع>
    <مقطع رقم="١٠">وَتَفْسِيْرُهُ هٰهُنَا هُوَ التَّفْسِيْرُ الَّذِي فُسَّرَ فِي الِابْتِدَاْءِ</مقطع>
    <مقطع رقم="١١">أَنَّكَ تُضْمِرُ فِعْلًا هٰذَا تَفْسِيْرُهُ</مقطع>
    <مقطع رقم="١٢">إِلَّا أَنَّ النَّصْبَ هُوَ الَّذِي يُخْتَاْرُ هٰهُنَا</مقطع>
    <مقطع رقم="١٣">وَهُوَ حَدُّ الْكَلَامِ</مقطع>
    <مقطع رقم="١٤">وَأَمَّا الانْتِصَاْبُ ثَمَّ وَهَاهُنَا فَمَنْ وَجْهٍ وَاْحِدٍ</مقطع>
    <مقطع رقم="١٥">وَمِثْلُ ذٰلِكَ <قول>أَعَبْدَ اللّٰهِ كُنْتَ مِثْلَهُ</قول>
   </مقطع>
    <مقطع رقم="١٦">لِأَنَّ  <حرف>كُنْتَ</حرف>  فِعْلٌ وَالْـ<حرف>مِثْلُ</حرف>  مُضَافٌ إِلَيْهِ وَهُوَ مَنْصُوْبٌ</مقطع>
    <مقطع رقم="١٧">وَمِثْلُهُ <قول>أَزَيْدًا لَسْتَ مِثْلَهُ</قول>
   </مقطع>
    <مقطع رقم="١٨">لِأَنَّهُ فِعْلٌ</مقطع>
    <مقطع رقم="١٩">فَصَاْرَ بِمَنْزِلَةِ قَوْلِكَ <قول>أَزَيْدًا لَقِيْتَ أَخَاهُ</قول>
   </مقطع>
    <مقطع رقم="٢٠">وَهُوَ قَوْلُ الْخَلِيْلِ</مقطع>
    <مقطع رقم="٢١">وَمِثْلُ ذٰلِكَ <قول>مَا أَدْرِي أَزْيَدًا مَرَرْتُ بِهِ أَمْ عَمْرًا</قول>
   </مقطع>
    <مقطع رقم="٢٢">وَ<قول>مَا أُبَالِي أَعَبْدَ اللّٰهِ لَقِيْتُ أَخَاهُ أَمْ عَمْرًا</قول>
   </مقطع>
    <مقطع رقم="٢٣">لِأَنَّهُ حَرْفُ الِاسْتِفْهَامِ وَهِى تِلْكَ الْأَلِفُ الَّتِي فِي قَوْلِكَ <قول>أَزَيْدًا لَقِيْتَهُ أَمْ عَمْرًا</قول>
   </مقطع>
    <مقطع رقم="٢٤">وَتَقُوْلُ <قول>أَعَبْدُ اللّٰهِ ضَرَبَ أَخُوْهُ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٢٥">لَا يَكُوْنُ إِلَّا الرَّفْعُ</مقطع>
    <مقطع رقم="٢٦">لِأَنَّ الَّذِي مِنْ سَبَبِ  <حرف>عَبْدِ اللّٰهِ</حرف>  مَرْفُوْعٌ فَاْعِلٌ</مقطع>
    <مقطع رقم="٢٧">وَالَّذِى لَيْسَ مِنْ سَبَبِهِ مَفْعُوْلٌ</مقطع>
    <مقطع رقم="٢٨">فَيْرَتَفِعُ إِذَا ارْتَفَعَ الَّذِي مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٢٩">كَمَا يَنْتَصِبُ إِذَا انْتَصَبَ</مقطع>
    <مقطع رقم="٣٠">وَيَكُوْنُ الْمُضْمَرُ مَا يَرْفَعُ</مقطع>
    <مقطع رقم="٣١">كَمَا <هارون مجلد="١" صفحة="١٠٢"/>أَضْمَرْتَ فِي الْأَوَّلِ مَا يَنْصِبُ</مقطع>
    <مقطع رقم="٣٢">فَإِنَّمَا جُعِلَ هٰذَا الْمُظْهَرُ بَيَانَ مَا هُوَ مِثْلُهُ</مقطع>
    <مقطع رقم="٣٣">فَإِنْ جَعَلْتَ  <حرف>زَيْدًا</حرف>  الْفَاْعِلَ قُلْتَ <قول>أَعَبْدَ اللّٰهِ ضَرَبَ أَخَاهُ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٣٤">وَتَقُوْلُ <قول>أَعَبْدُ اللّٰهِ ضَرَبَ أَخُوْهُ غُلَامَهُ</قول>
   </مقطع>
    <مقطع رقم="٣٥">إِذَا جَعَلْتَ الْـ<حرف>غُلَامَ</حرف>  فِي مَوْضِعِ  <حرف>زَيْدٍ</حرف>  حِيْنَ قُلْتَ <قول>أَعَبْدُ اللّٰهِ ضَرَبَ أَخُوْهُ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٣٦">فَيَصِيْرُ هٰذَا تَفْسِيْرًا لِشَيْءٍ رَفَعَ  <حرف>عَبْدَ اللّٰهِ</حرف>
   </مقطع>
    <مقطع رقم="٣٧">لِأَنَّهُ يَكُوْنُ مُوْقِعًا الْفِعْلَ بِمَا يَكُوْنُ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٣٨">كَمَا يُوْقِعُهُ بِمَا لَيْسَ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٣٩">كَأَنَّهُ قَالَ فِي التَّمْثِيْلِ وَإِنْ كَانَ لَا يُتَكَلَّمُ بِهِ <قول>أَعَبْدُ اللّٰهِ أَهَانَ غُلَامَهُ</قول>
   </مقطع>
    <مقطع رقم="٤٠">أَوْ <قول>عَاقَبَ غُلَامَهُ</قول>
   </مقطع>
    <مقطع رقم="٤١">أَوْ صَاْرَ فِي هَذِهِ الْحَاْلِ عِنْدَ السَّاْئِلِ وَإِنْ لَمْ يَكُنْ ثُمَّ فَسَّرَ</مقطع>
    <مقطع رقم="٤٢">وَإِنْ جَعَلْتَ الْـ<حرف>غُلَامَ</حرف>  فِي مَوْضِعِ  <حرف>زَيْدٍ</حرف>  حِيْنَ رَفَعْتَ  <حرف>زَيْدًا</حرف> نَصَبْتَ</مقطع>
    <مقطع رقم="٤٣">فَقُلْتَ <قول>أَعَبْدَ اللّٰهِ ضَرَبَ أَخَاهُ غُلَامُهُ</قول>
   </مقطع>
    <مقطع رقم="٤٤">كَأَنَّهُ جَعَلَهُ تَفْسِيْرًا لِفِعْلٍ غُلَامُهُ أَوْقَعَهُ عَلَيْهِ</مقطع>
    <مقطع رقم="٤٥">لِأَنَّهُ قَدْ يُوْقِعُ الْفِعْلَ عَلَيْهِ مَا هُوَ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٤٦">كَمَا يُوْقِعُهُ هُوَ عَلَى مَا هُوَ مِنْ سَبَبِهِ</مقطع>
    <مقطع رقم="٤٧">وَذٰلِكَ قَوْلُكَ <قول>أَعَبْدُ اللّٰهِ ضَرَبَ أَبَاهُ</قول>
   </مقطع>
    <مقطع رقم="٤٨">وَ<قول>أَعَبْدَ اللّٰهِ ضَرَبَهُ أَبُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٤٩">فَجَرَى مُجْرَى <قول>أَعَبْدُ اللّٰهِ هُوَ ضَرَبَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="٥٠">وَ<قول>أَعَبْدَ اللّٰهِ ضَرَبَهُ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٥١">كَأَنَّهُ فِي التَّمْثِيْلِ تَفْسِيْرٌ لِقَوْلِهِ <قول>أَعَبْدَ اللّٰهِ أَهَانَ أَبَاهُ غُلَامُهُ</قول>
   </مقطع>
    <مقطع رقم="٥٢">وَ<قول>أَعَبْدَ اللّٰهِ ضَرَبَ أَخَاهُ غُلَامُهُ</قول>
   </مقطع>
    <مقطع رقم="٥٣">وَلَا عَلَيْكَ أَقَدَّمْتَ الْـ<حرف>أَخَ</حرف>  أَمْ أَخَّرْتَهُ</مقطع>
    <مقطع رقم="٥٤">أَمْ قَدَّمْتَ الْـ<حرف>غُلَامَ</حرف>  أَمْ أَخَّرْتَهُ</مقطع>
    <مقطع رقم="٥٥">أَيُّهُمَا مَا جَعَلْتَهُ كَـ<حرف>زَيْدٍ</حرف>  مَفْعُوْلًا فَالأَوَّلُ رَفْعٌ</مقطع>
    <مقطع رقم="٥٦">وَإِنْ جَعَلْتَهُ كَـ<حرف>زَيْدٍ</حرف>  فَاْعِلًا فَالأَوَّلُ نَصَبٌ</مقطع>
    <مقطع رقم="٥٧">وَتَقُوْلُ <قول>آلسَّوْطُ ضُرِبَ بِهِ زَيْدٌ</قول>
   </مقطع>
    <مقطع رقم="٥٨">وَهُوَ كَقَوْلِكَ <قول>آلسَّوْطَ ضُرِبْتَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="٥٩">وَكَذٰلِكَ آلْخِوَانَ أُكِلَ اللَّحْمُ عَلَيْهِ</مقطع>
    <مقطع رقم="٦٠">وَكَذٰلِكَ <قول>أَزَيْدًا سُمِّيْتَ بِهِ أَوْ سُمِّيَ بِهِ <هارون مجلد="١" صفحة="١٠٣"/>عَمْرٌو</قول>
   </مقطع>
    <مقطع رقم="٦١">لِأَنَّ هٰذَا فِي مَوْضِعِ نَصْبٍ</مقطع>
    <مقطع رقم="٦٢">وَإِنَّمَا تَعْتَبِرَهُ أَنَّكَ لَوْ قُلْتَ <قول>آلسَّوْطَ ضُرِبْتَ</قول>
   </مقطع>
    <مقطع رقم="٦٣">فَكَانَ هٰذَا كَلَامًا</مقطع>
    <مقطع رقم="٦٤">أَوْ <قول>آلْخِوَانَ أَكَلْتَ</قول>
   </مقطع>
    <مقطع رقم="٦٥">لَمْ يَكُنْ إِلَّا نَصَبًا</مقطع>
    <مقطع رقم="٦٦">كَمَا أَنَّكَ لَوْ قُلْتَ <قول>أَزَيْدًا مَرَرْتَ</قول>
   </مقطع>
    <مقطع رقم="٦٧">فَكَانَ كَلَامًا لَمْ يَكُنْ إِلَّا نَصَبًا</مقطع>
    <مقطع رقم="٦٨">فَمِنْ ثُّمَّ جُعِلَ هٰذَا الْفِعْلُ الَّذِي لَا يَظْهَرُ تَفْسِيْرُهُ تَفُسِيْرَ مَا يَنْصِبُ</مقطع>
    <مقطع رقم="٦٩">فَاْعْتَبِرْ مَا أَشْكَلَ عَلَيْكَ مِنْ هٰذَا بِذَا</مقطع>
    <مقطع رقم="٧٠">فَإِنَّ قُلْتَ <قول>أَزَيْدٌ ذُهِبَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="٧١">أَوْ <قول>أَزَيْدٌ اُنْطُلِقَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="٧٢">لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
    <مقطع رقم="٧٣">لِأَنَّكَ لَوْ لَمْ تَقُلِ  <حرف>بِهِ</حرف>  فَكَانَ كَلَامًا لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
    <مقطع رقم="٧٤">كَمَا قُلْتَ <قول>أَزَيْدٌ ذَهَبَ أَخُوْهُ</قول>
   </مقطع>
    <مقطع رقم="٧٥">لِأَنَّكَ لَوْ قُلْتَ <قول>أَزَيْدٌ ذَهَبَ</قول> لَمْ يَكُنْ إِلَّا رَفْعًا</مقطع>
    <مقطع رقم="٧٦">وَتَقُوْلُ <قول>أَزَيْدًا ضَرَبْتَ أَخَاهُ</قول>
   </مقطع>
    <مقطع رقم="٧٧">لِأَنَّكَ لَوْ أَلْقَيْتَ الْـ<حرف>أَخَ</حرف>  قُلْت <قول>أَزَيْدًا ضَرَبْتَ</قول>
   </مقطع>
    <مقطع رقم="٧٨">فَاْعْتَبِرْ هٰذَا بِهٰذَا</مقطع>
    <مقطع رقم="٧٩">ثُمَّ اجْعَلْ كُلَّ وَاْحِدٍ جْئَتَ بِهِ تَفْسِيْرَ مَا هُوَ مِثْلُهُ</مقطع>
    <مقطع رقم="٨٠">وَ<حرف>الْيَوْمُ</حرف>  وَالظُّرُوْفُ بِمَنْزِلَةِ  <حرف>زَيْدٍ</حرف>  وَ<حرف>عَبْدِ اللّٰهِ</حرف>  إِذَا لَمْ يَكُنْ ظُرُوْفًا</مقطع>
    <مقطع رقم="٨١">وَذٰلِكَ قَوْلُكَ <قول>أَيَوْمَ الْجُمُعَةِ يَنْطَلِقُ فِيْهِ عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٨٢">كَقَوْلِكَ <قول>أَعَمْرًا تَكَلَّمَ فِيْهِ عَبْدُ اللّٰهِ</قول>
   </مقطع>
    <مقطع رقم="٨٣">وَ<قول>أَيَوْمُ الْجُمُعَةِ يُنْطَلَقُ فِيْهِ</قول>
   </مقطع>
    <مقطع رقم="٨٤">كَقَوْلِكَ <قول>أَزَيْدٌ يُذْهَبُ بِهِ</قول>
   </مقطع>
    <مقطع رقم="٨٥">وَتَقُوْلُ <قول>أَأَنْتَ عَبْدُ اللّٰهِ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع رقم="٨٦">تُجْرِيْهِ هَاهُنَا مُجْرَى <قول>أَنَا زَيْدٌ ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٨٧">لِأَنَّ الَّذِي يَلِي حَرْفَ الِاسْتِفْهَامِ  <حرف>أَنْتَ</حرف>
   </مقطع>
    <مقطع رقم="٨٨">ثُمَّ ابْتَدَأْتَ هٰذَا</مقطع>
    <مقطع رقم="٨٩">وَلَيْسَ قَبْلَهُ حَرْفُ اسْتِفْهَامٍ وَلَاشَيْءٍ هُوَ بِالْفِعْلِ وَتَقْدِيْمِهِ أَوْلَى</مقطع>
    <مقطع رقم="٩٠">إِلَّا أَنَّكَ إِنْ شِئْتَ نَصَبْتَهُ</مقطع>
    <مقطع رقم="٩١">كَمَا تَنْصِبُ <قول>زَيْدًا ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٩٢">فَهُوَ عَرَبِيٌّ جَيِّدٌ</مقطع>
    <مقطع رقم="٩٣">وَأَمْرُهُ هَاهُنَا عَلَى قَوْلِكَ <قول>زَيْدٌ ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع رقم="٩٤">فَإِنْ قُلْتَ <قول>أَكُلَّ يَوْمٍ زَيْدًا تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع رقم="٩٥">فَهُوَ نَصْبٌ كَقَوْلِكَ <قول>أَزَيْدًا تَضْرِبُهُ كُلَّ يَوْمٍ</قول>
   </مقطع>
    <هارون مجلد="١" صفحة="١٠٤"/>
    <مقطع رقم="٩٦">لِأَنَّ الظَّرْفَ لَا يَفْصِلُ فِي قَوْلِكَ <قول>مَا الْيَوْمَ زَيْدٌ ذَاهِبًا</قول>
   </مقطع>
    <مقطع رقم="٩٧">وَ<قول>إِنَّ الْيَوْمَ عَمْرًا مُنْطَلِقٌ</قول>
   </مقطع>
    <مقطع رقم="٩٨">فَلَا يَحْجُزُ هَاهُنَا كَمَا لَا يَحْجُزُ ثَمَّةَ</مقطع>
    <مقطع رقم="٩٩">وَتَقُوْلُ <قول>أَعَبْدُ اللّٰهِ أَخُوْهُ تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع رقم="١٠٠">كَمَا تَقُوْلُ <قول>أَأَنْتَ زَيْدٌ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع رقم="١٠١">لِأَنَّ الِٱسْمَ هَاهُنَا بِمَنْزِلَةِ مُبْتَدَإٍ لَيْسَ قَبْلَهُ شَيْءٌ</مقطع>
    <مقطع رقم="١٠٢">وَإِنْ نَصَبْتَهُ عَلَى قَوْلِكَ <قول>زَيْدًا تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع رقم="١٠٣">قُلْتَ <قول>أَزَيْدًا أَخَاهُ تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع رقم="١٠٤">لِأَنَّكَ نَصَبْتَ الَّذِي مِنْ سَبَبِهِ بِفِعْلٍ هٰذَا تَفْسِيْرُهُ</مقطع>
    <مقطع رقم="١٠٥">وَمَنْ قَالَ <قول>زَيْدًا ضَرَبْتُهُ</قول>
   </مقطع>
    <مقطع رقم="١٠٦">قَالَ <قول>أَزَيْدًا أَخَاهُ تَضْرِبُهُ</قول>
   </مقطع>
    <مقطع رقم="١٠٧">فَإِنَّمَا نَصَبَ  <حرف>زَيْدًا</حرف>  لِأَنَّ أَلِفَ الِاسْتِفْهَامِ وَقَعَتْ عَلَيْهِ</مقطع>
    <مقطع رقم="١٠٨">وَالَّذِى مِنْ سَبَبِهِ مَنْصُوْبٌ</مقطع>
    <مقطع رقم="١٠٩">وَقَدْ يَجُوْزُ الرَّفْعُ فِي <قول>أَعَبْدُ اللّٰهِ مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="١١٠">عَلَى مَا ذَكَرْتُ لَكَ</مقطع>
    <مقطع رقم="١١١">وَ<قول>أَعَبْدُ اللّٰهِ ضَرَبْتَ أَخَاهُ</قول>
   </مقطع>
    <مقطع رقم="١١٢">وَأَمَّا قَوْلُكَ <قول>أَزَيْدًا مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="١١٣">فَبِمَنْزِلِةِ قَوْلِكَ <قول>أَزَيْدًا ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع رقم="١١٤">وَالرَّفْعُ فِي هٰذَا أَقْوَى مِنْهُ فِي <قول>أَعَبْدُ اللّٰهِ ضَرَبْتَهُ</قول>
   </مقطع>
    <مقطع رقم="١١٥">وَهُوَ أَيْضًا قَدْ يَجُوْزُ إِذَا جَاْزَ هٰذَا</مقطع>
    <مقطع رقم="١١٦">كَمَا كَانَ ذٰلِكَ فِيْمَا قَبْلَهُ مِنَ الْاْبْتِدَاْءِ</مقطع>
    <مقطع رقم="١١٧">وَمَا جَاْءَ بَعْدَ مَا بُنِيَ عَلَى الْفِعْلِ</مقطع>
    <مقطع رقم="١١٨">وَذٰلِكَ أَنَّهُ ابْتَدَأَ  <حرف>عَبْدَ اللّٰهِ</حرف>  وَجَعَلَ الْفِعْلَ فِي مَوْضِعِ <هارون مجلد="١" صفحة="١٠٥"/>الْمَبْنِيِّ عَلَيْهِ</مقطع>
    <مقطع رقم="١١٩">فَكَأَنَّهُ قَالَ <قول>أَعَبْدُ اللّٰهِ أَخُوْكَ</قول>
   </مقطع>
    <مقطع رقم="١٢٠">فَمَنْ زَعَمَ أَنَّهُ إِذَا قَالَ <قول>أَزَيْدًا مَرَرْتَ بِهِ</قول>
   </مقطع>
    <مقطع رقم="١٢١">إِنَّمَا يَنْصِبُهُ بِهٰذَا الْفِعْلِ فَهْوَ يَنْبَغِي لَهُ أَنْ يَجُرَّهُ</مقطع>
    <مقطع رقم="١٢٢">لِأَنَّهُ لَا يَصِلُ إِلَّا بِحَرْفِ إِضَافَةٍ</مقطع>
    <مقطع رقم="١٢٣">وَإِذَا أَعْمَلَتِ الْعَرَبُ شَيْئًا مُضْمَرًا لَمْ يَخْرُجْ عَنْ عَمَلِهِ مُظْهَرًا فِي الْجَرِّ وَالنَّصْبِ وَالرَّفْعِ</مقطع>
    <مقطع رقم="١٢٤">تَقُوْلُ <قول>وَبَلَدٍ</قول> تُرِيْدُ <قول>وَرُبَّ بَلَدٍ</قول>
   </مقطع>
    <مقطع رقم="١٢٥">وَتَقُوْلُ <قول>زَيْدًا</قول> تُرِيْدُ <قول>عَلَيْكَ زَيْدًا</قول>
   </مقطع>
    <مقطع رقم="١٢٦">وَتَقُوْلُ <قول>الْهِلَالُ</قول> تُرِيْدُ <قول>هٰذَا الْهِلَالُ</قول>
   </مقطع>
    <مقطع رقم="١٢٧">فَكُلُّهُ يَعْمَلُ عَمَلَهُ مُظْهَرًا</مقطع>
    <مقطع رقم="١٢٨">وَمِمَّا يَقْبُحُ بَعْدَهُ ابْتِدَاْءُ الْأَسْمَاْءِ</مقطع>
    <مقطع رقم="١٢٩">وَيَكُوْنُ الْٱسْمُ بَعْدَهُ إِذَا أَوْقَعْتَ الْفِعْلَ عَلَى شَيْءٍ مِنْ سَبَبِهِ نَصَبًا فِي الْقِيَاْسِ</مقطع>
    <مقطع رقم="١٣٠">
        <حرف>إِذَا</حرف>  وَ<حرف>حَيْثُ</حرف>
   </مقطع>
    <مقطع رقم="١٣١">تَقُوْلُ <قول>إِذَا عَبْدَ اللّٰهِ تَلْقَاهُ فَأَكْرِمْهُ</قول>
   </مقطع>
    <هارون مجلد="١" صفحة="١٠٦"/>
    <مقطع رقم="١٣٢">وَ<قول>حَيْثُ زَيْدًا تَجِدهُ فَأَكْرِمْهُ</قول>
   </مقطع>
    <مقطع رقم="١٣٣">لِأَنَّهُمَا يَكُوْنَانِ فِي مَعْنَى حُرُوْفِ الْمُجَاْزَاْةِ</مقطع>
    <مقطع رقم="١٣٤">وَيَقْبُحُ إِنِ ابْتَدَأْتَ الْٱسْمَ بَعْدَهُمَا إِذَا كَانَ بَعْدَهُ الْفِعْلُ</مقطع>
    <مقطع رقم="١٣٥">لَوْ قُلْتَ <قول>اجْلِسْ حَيْثُ زَيْدٌ جَلَسَ</قول>
   </مقطع>
    <مقطع رقم="١٣٦">وَ<قول>اِجْلِسْ إِذَا زَيْدٌ يَجْلِسُ</قول>
   </مقطع>
    <مقطع رقم="١٣٧">كَانَ أَقْبَحَ مِنْ قَوْلِكَ <قول>إِذَا جَلَسَ زَيْدٌ</قول> وَ<قول>إِذَا يَجْلِسُ</قول> وَ<قول>حَيْثُ يَجْلِسُ</قول> وَ<قول>حَيْثُ جَلَسَ</قول>
   </مقطع>
    <مقطع رقم="١٣٨">وَالرَّفْعُ بَعْدَهُمَا جَاْئِزٌ لِأَنَّكَ قَدْ تَبْتَدِئُ بَعْدَهُمَا فَتَقُوْلُ <قول>اجْلِسْ حَيْثُ عَبْدُ اللّٰهِ جَالِسٌ</قول>
   </مقطع>
    <مقطع رقم="١٣٩">وَ<قول>اجْلِسْ إِذَا عَبْدُ اللّٰهِ جَلَسَ</قول>
   </مقطع>
    <مقطع رقم="١٤٠">وَلَـ<حرف>إِذَا</حرف>  مُوْضِعٌ آخَرَ يَحْسُنُ ابْتِدَاْءُ الْٱسْمِ بَعْدَهَا فِيْهِ</مقطع>
    <مقطع رقم="١٤١">تَقُوْلُ <قول>نَظَرْتُ فَإِذَا زَيْدٌ يَضْرِبُهُ عَمْرٌو</قول>
   </مقطع>
    <مقطع رقم="١٤٢">لِأَنَّكَ لَوْ قُلْتَ <قول>نَظَرْتُ فَإِذَا زَيْدٌ يَذْهَبُ</قول>لَحَسُنَ</مقطع>
    <مقطع رقم="١٤٣">وَأَمَّا  <حرف>إِذْ</حرف>  فَيَحْسُنُ ابْتِدَاْءُ الْٱسْمِ بَعْدَهَا</مقطع>
    <مقطع رقم="١٤٤">تَقُوْلُ <قول>جِئْتُ إِذْ عَبْدُ اللّٰهِ قَاْئِمٌ</قول>
   </مقطع>
    <مقطع رقم="١٤٥">وَ<قول>جِئْتُ إِذْ عَبْدُ اللّٰهِ يَقُوْمُ</قول>
   </مقطع>
    <مقطع رقم="١٤٦">إِلَّا أَنَّهَا فِي  <حرف>فَعَلَ</حرف> قَبِيْحَةٌ</مقطع>
    <مقطع رقم="١٤٧">نَحْوُ قَوْلِكَ <قول>جِئْتُ إِذْ عَبْدُ اللّٰهِ قَامَ</قول>
   </مقطع>
    <مقطع رقم="١٤٨">وَلَكِنَّ  <حرف>إِذْ</حرف>  إِنَّمَا يَقَعُ فِي الْكَلَامِ الْوَاْجِبِ</مقطع>
    <مقطع رقم="١٤٩">فَاْجْتَمَعَ فِيْهَا هٰذَا وَأَنَّكَ تَبْتَدِئُ الٱسْمَ بَعْدَهَا</مقطع>
    <مقطع رقم="١٥٠">فَحَسَنَ الرَّفْعُ</مقطع>
    <مقطع رقم="١٥١">وَمِمَّا يَنْتَصِبُ أَوَّلُهُ لِأَنَّ آخِرَهُ مُلْتَبِسٌ بِالْأَوَّلِ</مقطع>
    <مقطع رقم="١٥٢">قَوْلُهُ <قول>أَزَيْدًا ضَرَبْتَ عَمْرًا وَأَخَاهُ</قول>
   </مقطع>
    <مقطع رقم="١٥٣">وَ<قول>أَزَيْدًا ضَرَبْتَ رَجُلًا يُحِبُّهُ</قول>
   </مقطع>
    <مقطع رقم="١٥٤">وَ<قول>أَزَيْدًا ضَرَبْتَ جَاْرِيَتَيْنِ يُحِبُّهُمَا</قول>
   </مقطع>
    <مقطع رقم="١٥٥">فَإِنَّمَا نَصَبْتَ الْأَوَّلَ لِأَنَّ الْآخِرَ مُلْتَبِسٌ بِهِ</مقطع>
    <مقطع رقم="١٥٦">إِذْ كَانَتْ صِفَتُهُ مُلْتَبِسَةٌ بِهِ</مقطع>
    <مقطع رقم="١٥٧">وَإِذَا أَرَدْتَ أَنْ تَعْلَمَ الْتِبَاْسَهُ بِهِ فَاْدْخُلْهُ فِي الْبَاْبِ الَّذِي تُقَدِّمُ فِيْهِ الصِّفَةَ</مقطع>
    <مقطع رقم="١٥٨">فَمَا حَسُنَ تَقْدِيْمُ صِفَتِهِ فَهُوَ مُلْتَبِسٌ بِالْأَوَّلِ</مقطع>
    <مقطع رقم="١٥٩">وَمَا لَا يَحْسُنُ فَلَيْسَ مُلْتَبِسًا بِهِ</مقطع>
    <مقطع رقم="١٦٠">أَلَا تَرَى أَنَّكَ تَقُوْلُ <قول>مَرَرْتُ بِرَجُلٍ مُنْطَلِقَةٍ جَاْرِيَتَانِ يُحِبُّهُمَا</قول>
   </مقطع>
    <مقطع رقم="١٦١">وَ<قول>مَرَرْتُ بِرَجُلٍ مُنْطَلِقٍ زِيْدٌ وَأَخُوْهُ</قول>
   </مقطع>
    <مقطع رقم="١٦٢">لِأَنَّكَ لَمَّا أَشْرَكْتَ <هارون مجلد="١" صفحة="١٠٧"/>بَيْنَهُمَا فِي الْفِعْلِ صَاْرَ  <حرف>زَيْدٌ</حرف>  مُلْتَبِسًا بِالْـ<حرف>أَخِ</حرف>
   </مقطع>
    <مقطع رقم="١٦٣">فَالْتَبَسَ بِـ<حرف>رَجُلٍ</حرف>
   </مقطع>
    <مقطع رقم="١٦٤">وَلَوْ قُلْتَ <قول>أَزَيْدًا ضَرَبْتَ عَمْرًا وَضَرَبْتَ أَخَاهُ</قول>
   </مقطع>
    <مقطع رقم="١٦٥">لَمْ يَكُنْ كَلَامًا لِأَنَّ  <حرف>عَمْرًا</حرف>  لَيْسَ فِيْهِ مِنْ سَبَبِ الْأَوَّلِ شَيْءٌ وَلَا مُلْتَبِسًا بِهِ</مقطع>
    <مقطع رقم="١٦٦">أَلَا تَرَى أَنَّكَ لَوْ قُلْتَ <قول>مَرَرْتُ بِرَجُلٍ قَاْئِمٍ عَمْرٌو وَقَاْئِمٍ أَخُوْهُ</قول>
   </مقطع>
    <مقطع رقم="١٦٧">لَمْ يَجُزْ لِأَنَّ أَحَدَهُمَا مُلْتَبِسٌ بِالْأَوَّلِ وَالْآخَرُ لَيْسَ مُلْتَبِسًا</مقطع>
</باب>
